  <author>Dirk Rafaelsz. Camphuysen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ONtruckt my, Godt, den boosen <rhyme label="a" type="f">mannen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Den Menschen, slaven van het <rhyme label="b" type="m">quaedt</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Die hert- en herssen-krachten <rhyme label="a" type="f" corresp="#s1:l1">spannen</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Tot alle goddeloose <rhyme label="b" type="m" corresp="#s1:l2">daedt</rhyme>:</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Die dag’lijcks twist en krijgh <rhyme label="a" type="f">berocken</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">En door een diep-verscholen <rhyme label="b" type="m">vondt</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Het vuyr der schier-begraven <rhyme label="a" type="f" corresp="#s2:l1">wrocken</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Doen voncken met haer schalcken <rhyme label="b" type="m" corresp="#s2:l2">mondt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Haer’ tonge, steecke-rad, (ja <rhyme label="a" type="f">radder</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Als van een slang) in alle <rhyme label="b" type="m">woordt</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Draeght boos vergiff, gelijck een <rhyme label="a" type="f" corresp="#s3:l1">adder</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">En is een eer- en <rhyme label="b" type="m" corresp="#s3:l2">zielen-moordt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Te swack zijn my hier alle <rhyme label="a" type="f">menschen</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">’tGevaer te swaer, de ramp te <rhyme label="b" type="m">groot</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Ghy, Godt, (dat is mijn beed’ en <rhyme label="a" type="f" corresp="#s4:l1">wenschen</rhyme>)</l>
        <l id="s4:l4" met="4" type="-+">Moet bystandt doen in sulcken <rhyme label="b" type="m" corresp="#s4:l2">noodt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Bewaert my van der boosen <rhyme label="a" type="f">handen</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Die mijne stappen gade <rhyme label="b" type="m">slaen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">En, uyt op enckel leet en <rhyme label="a" type="f" corresp="#s5:l1">schanden</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">My listelijck rondtsomme <rhyme label="b" type="m" corresp="#s5:l2">gaen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Der trotser menschen blinde <rhyme label="a" type="f">netten</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Zijn mijnen voeten dicht <rhyme label="b" type="m">geset</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">Ick moeter in: Wie kan’t <rhyme label="a" type="f" corresp="#s6:l1">beletten</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Soo ghy’t, o Heere, niet <rhyme label="b" type="m" corresp="#s6:l2">belet</rhyme>?</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Wat sal ick anders, dan mijn <rhyme label="a" type="f">reden</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Aldus tot Godt te laten <rhyme label="b" type="m">gaen</rhyme>?</l>
        <l id="s7:l3" met="4" type="-+">Ghy zijt mijn Godt. verhoort mijn <rhyme label="a" type="f" corresp="#s7:l1">beden</rhyme></l>
        <l id="s7:l4" met="4" type="-+">uyt diepen noodt tot u <rhyme label="b" type="m" corresp="#s7:l2">gedaen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Ghy, Heer, in wien mijn heyl sijn <rhyme label="a" type="f">vastheydt</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Mijn leven sijn gewisheydt <rhyme label="b" type="m">heeft</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Ghy waert het die in <rhyme label="a" type="f" corresp="#s8:l1">hoogh-belastheydt</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Ten dagh des strijdts, mijn heylandt <rhyme label="b" type="m" corresp="#s8:l2">bleeft</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Vw’ gunst quam over my sich <rhyme label="a" type="f">strecken</rhyme></l>
        <l id="s9:l2" met="4" type="-+">In’t naken van d’onsek’re <rhyme label="b" type="m">kamp</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">En ging (o troost!) mijn hoofdt <rhyme label="a" type="f" corresp="#s9:l1">bedecken</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Voor’t doodlijck treffen van den <rhyme label="b" type="m" corresp="#s9:l2">ramp</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">O! nu als doe: Ach! gunt den <rhyme label="a" type="f">boosen</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Sijn lusten niet. Ach! breeckt sijn’ <rhyme label="b" type="m">raedt</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Op dat de monden der <rhyme label="a" type="f" corresp="#s10:l1">godloosen</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Niet trotsen in’t geluckte <rhyme label="b" type="m" corresp="#s10:l2">quaedt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Het onheyl dat in haer <rhyme label="a" type="f">gedachten</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Vast broeyt en groeyt, treff’ haren <rhyme label="b" type="m">kop</rhyme>.</l>
        <l id="s11:l3" met="4" type="-+">(Die naer eens anders quaedt durff <rhyme label="a" type="f" corresp="#s11:l1">trachten</rhyme></l>
        <l id="s11:l4" met="4" type="-+">Te recht drinckt hy van ’tselve <rhyme label="b" type="m" corresp="#s11:l2">sop</rhyme>.)</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Alsoo sal’t gaen. Een bron van <rhyme label="a" type="f">qualen</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Wordt hun haer eygen <rhyme label="b" type="m">leugen-werck</rhyme>:</l>
        <l id="s12:l3" met="4" type="-+">Het hemel-vuyr sal op haer <rhyme label="a" type="f" corresp="#s12:l1">dalen</rhyme>.</l>
        <l id="s12:l4" met="4" type="-+">(Onmijdb’re straff godloosheydts <rhyme label="b" type="m" corresp="#s12:l2">perck</rhyme>.)</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Godts wraeck sal haer verhael eens <rhyme label="a" type="f">krijgen</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">En slaense ne’er ten sulcken <rhyme label="b" type="m">val</rhyme></l>
        <l id="s13:l3" met="4" type="-+">Daer immermeer geen <rhyme label="a" type="f" corresp="#s13:l1">weder-stijgen</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Geen op-getil aen wesen <rhyme label="b" type="m" corresp="#s13:l2">sal</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">De trouweloose <rhyme label="a" type="f">ydelheden</rhyme></l>
        <l id="s14:l2" met="4" type="-+">Eens leugenaers zijn sonder <rhyme label="b" type="m">standt</rhyme>;</l>
        <l id="s14:l3" met="4" type="-+">Daer is geen vastheydt in sijn’ <rhyme label="a" type="f" corresp="#s14:l1">treden</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">Sijn Doen en heeft geen duer in’t <rhyme label="b" type="m" corresp="#s14:l2">landt</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Geweldenaers staen <rhyme label="a" type="f">onbestendigh</rhyme>;</l>
        <l id="s15:l2" met="4" type="-+">Gedurigh jaeghtse ’tonheyl <rhyme label="b" type="m">na</rhyme>.</l>
        <l id="s15:l3" met="4" type="-+">Hy maeckt sijn leven vroech <rhyme label="a" type="f" corresp="#s15:l1">ellendigh</rhyme></l>
        <l id="s15:l4" met="4" type="-+">Die uyt is om eens anders <rhyme label="b" type="m" corresp="#s15:l2">scha</rhyme>’.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">De Heer (des heb ick seker <rhyme label="a" type="f">weten</rhyme></l>
        <l id="s16:l2" met="4" type="-+">In mijn van-Godt-geleert <rhyme label="b" type="m">gemoedt</rhyme>)</l>
        <l id="s16:l3" met="4" type="-+">En sal des armen niet <rhyme label="a" type="f" corresp="#s16:l1">vergeten</rhyme></l>
        <l id="s16:l4" met="4" type="-+">Schoon hy bywijlen lijden <rhyme label="b" type="m" corresp="#s16:l2">moet</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Hy sal sijn rechte sake <rhyme label="a" type="f">richten</rhyme>,</l>
        <l id="s17:l2" met="4" type="-+">Trots alle trotse <rhyme label="b" type="m">we’erparty</rhyme>.</l>
        <l id="s17:l3" met="4" type="-+">O! daer Godts gunst haer glans laet <rhyme label="a" type="f" corresp="#s17:l1">lichten</rhyme></l>
        <l id="s17:l4" met="4" type="-+">Verkeert haest alle Droeff in <rhyme label="b" type="m" corresp="#s17:l2">Bly</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Hiertusschen wordt u van den <rhyme label="a" type="f">vromen</rhyme></l>
        <l id="s18:l2" met="4" type="-+">Een heerlijck herten-loff <rhyme label="b" type="m">geseyt</rhyme>;</l>
        <l id="s18:l3" met="4" type="-+">Sy sullen vaste plaets <rhyme label="a" type="f" corresp="#s18:l1">bekomen</rhyme></l>
        <l id="s18:l4" met="4" type="-+">In uwe <rhyme label="b" type="m" corresp="#s18:l2">tegenwoordicheydt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

    <melody>Ik ben een arme pelgrim hier</melody>
    <categories/>
  <author>Christianus Vermeulen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HOort doch, de valsche <rhyme label="a" type="m">Phariseen</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Op Christum Jesum <rhyme label="b" type="f">murmureerden</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Dat hy soo soet, en soo <rhyme label="a" type="m" corresp="#s1:l1">ghemeen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">De Tollenaers <rhyme label="b" type="f" corresp="#s1:l2">hanteerde</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">En hy daer op met goet <rhyme label="a" type="m">bediedt</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Antwoorde teghens de <rhyme label="b" type="f">verwarders</rhyme>?</l>
        <l id="s2:l3" met="4" type="-+">Zijt doch daer in verwondert <rhyme label="a" type="m" corresp="#s2:l1">niet</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Dit's 't Ampt van goede <rhyme label="b" type="f" corresp="#s2:l2">Harders</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Want een die hondert Schapen <rhyme label="a" type="m">heeft</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">En siet bedroeft, dat een van <rhyme label="b" type="f">alle</rhyme></l>
        <l id="s3:l3" met="4" type="-+">De Schapen achter Lande <rhyme label="a" type="m" corresp="#s3:l1">sweeft</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Placht wel de rest te <rhyme label="b" type="f" corresp="#s3:l2">stallen</rhyme>,</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Soo langh dat hy 't verlooren <rhyme label="a" type="m">Lam</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Met langh te soecken heeft <rhyme label="b" type="f">beloopen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En weerom aen syn eyghen <rhyme label="a" type="m" corresp="#s4:l1">Dam</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Ghebracht heeft by de <rhyme label="b" type="f" corresp="#s4:l2">hoopen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Jae, even soo hy 't Schaepjen <rhyme label="a" type="m">vondt</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Niet sonder al te groot <rhyme label="b" type="f">beroeren</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Zijns hertjens sucht, hy t'samen <rhyme label="a" type="m" corresp="#s5:l1">bondt</rhyme></l>
        <l id="s5:l4" met="3" type="-+">En swierdt het om syn <rhyme label="b" type="f" corresp="#s5:l2">schoeren</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Soo roept hy stracx met luyder <rhyme label="a" type="m">stem</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Sijn Bueren al aen weder <rhyme label="b" type="f">zijden</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">En wel dat zy-luy sich met <rhyme label="a" type="m" corresp="#s6:l1">hem</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Om 'tSchaepjens wil <rhyme label="b" type="f" corresp="#s6:l2">verblijden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Een Vrouw mee (let wel op het <rhyme label="a" type="m">punt</rhyme>)</l>
        <l id="s7:l2" met="4" type="-+">Wanneers' eylaes! maer eens <rhyme label="b" type="f">verlooren</rhyme></l>
        <l id="s7:l3" met="4" type="-+">En heeft van thienen eene <rhyme label="a" type="m" corresp="#s7:l1">Munt</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Hoe luyde laets' haer <rhyme label="b" type="f" corresp="#s7:l2">hooren</rhyme>?</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">s'Ontsteeckt de kaers, sy vaeght het <rhyme label="a" type="m">huys</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Tot dats' hem wederom komt te <rhyme label="b" type="f">vinnen</rhyme>;</l>
        <l id="s8:l3" met="4" type="-+">En daer na met een bly <rhyme label="a" type="m" corresp="#s8:l1">ghedruys</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Spreeckt zy tot haer <rhyme label="b" type="f" corresp="#s8:l2">Vriendinnen</rhyme>:</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Verblijdt u met my even <rhyme label="a" type="m">seer</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Waert ghy met my bedroeft <rhyme label="b" type="f">vooren</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Want siet, daer is den Penninck <rhyme label="a" type="m" corresp="#s9:l1">weer</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Die 'k wijlen hadd' <rhyme label="b" type="f" corresp="#s9:l2">verlooren</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Dus roept de Vrouw dus roept de <rhyme label="a" type="m">Man</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Dus roepen dese twee alle <rhyme label="b" type="f">beyde</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Mach ick met meerder reden <rhyme label="a" type="m" corresp="#s10:l1">dan</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Mijn hert niet wel <rhyme label="b" type="f" corresp="#s10:l2">verbreyden</rhyme>?</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Sal ick de mensch, die 'k soo <rhyme label="a" type="m">bemin</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Dan niet met recht wel soecken <rhyme label="b" type="f">meughen</rhyme>?</l>
        <l id="s11:l3" met="4" type="-+">En als ick hem nu weerom <rhyme label="a" type="m" corresp="#s11:l1">vin</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">My in de vondt <rhyme label="b" type="f" corresp="#s11:l2">verheughen</rhyme>?</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Voorwaer, ick seggh' u voor <rhyme label="a" type="m">ghewis</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Onthoudt doch wel mijne <rhyme label="b" type="f">leeringh</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Dat in den Hemel blyschap <rhyme label="a" type="m" corresp="#s12:l1">is</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Om een Sondaers <rhyme label="b" type="f" corresp="#s12:l2">bekeeringh</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Veel mee, dan over 't groot <rhyme label="a" type="m">ghetal</rhyme></l>
        <l id="s13:l2" met="4" type="-+">Van die my noyt met sond' <rhyme label="b" type="f">bedroefde</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Als over dees', die voor gheen <rhyme label="a" type="m" corresp="#s13:l1">val</rhyme></l>
        <l id="s13:l4" met="3" type="-+">Te boeten en <rhyme label="b" type="f" corresp="#s13:l2">behoefden</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">O Iesu ick ben als een <rhyme label="a" type="m">Schaep</rhyme></l>
        <l id="s14:l2" met="4" type="-+">Verdoolt: ick wil het gaern <rhyme label="b" type="f">weten</rhyme>:</l>
        <l id="s14:l3" met="4" type="-+">Maer soeckt my Heer, want Heer u <rhyme label="a" type="m" corresp="#s14:l1">knaep</rhyme></l>
        <l id="s14:l4" met="3" type="-+">Heeft u noch niet <rhyme label="b" type="f" corresp="#s14:l2">vergeten</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Gij, die God der Goden <rhyme label="a" type="m">zijt</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Eeuwig God, uit God <rhyme label="b" type="f">geboren</rhyme>;</l>
        <l id="s1:l3" met="4" type="+-">Gij, die, ter bestemder <rhyme label="a" type="m" corresp="#s1:l1">tijd</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Mensch wierdt, ons ten Borg <rhyme label="b" type="f" corresp="#s1:l2">beschoren</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">En, als Middelaer <rhyme label="c" type="m">beloond</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Zijt, van God, met eer <rhyme label="c" type="m" corresp="#s1:l5">bekroond</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Zie, van Uwen <rhyme label="a" type="m">Hemeltroon</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Op ons, die Uw' Naem <rhyme label="b" type="f">belijden</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">U, als Gods gezalfden <rhyme label="a" type="m" corresp="#s2:l1">Zoon</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Als Verlosser, de offers <rhyme label="b" type="f" corresp="#s2:l2">wijden</rhyme>:</l>
        <l id="s2:l5" met="4" type="+-">Wien ons hart, met eerbied, <rhyme label="c" type="m">heet</rhyme>:</l>
        <l id="s2:l6" met="4" type="+-">Koning, Priester en <rhyme label="c" type="m" corresp="#s2:l5">Profeet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">In der beulen helschen <rhyme label="a" type="m">drom</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Tradt Uw voet den moordhof <rhyme label="b" type="f">binnen</rhyme>: -</l>
        <l id="s3:l3" met="4" type="+-">In het binnenst <rhyme label="a" type="m" corresp="#s3:l1">Heiligdom</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Gingt Gij, met Uw bloed, <rhyme label="b" type="f" corresp="#s3:l2">verwinnen</rhyme>: -</l>
        <l id="s3:l5" met="4" type="+-">Als een schuld'loos Lam <rhyme label="c" type="m">geslacht</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Roept Ge aen 't Kruis: Het is <rhyme label="c" type="m" corresp="#s3:l5">volbracht</rhyme>!</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">'t Oog, dat op dien Kruispael <rhyme label="a" type="m">ziet</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Schreid, meêlijdend, <rhyme label="b" type="f">tranenbeken</rhyme>; -</l>
        <l id="s4:l3" met="4" type="+-">'t Hart zal, in het dankbaer <rhyme label="a" type="m" corresp="#s4:l1">lied</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Van het heil Uw's lijdens <rhyme label="b" type="f" corresp="#s4:l2">spreken</rhyme>. -</l>
        <l id="s4:l5" met="4" type="+-">Eindeloze <rhyme label="c" type="m">zaligheid</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Heeft Uw Kruisdood ons <rhyme label="c" type="m" corresp="#s4:l5">bereid</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Eer Gij aen dien Kruispael <rhyme label="a" type="m">leedt</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Met Uw bloed ons hebt <rhyme label="b" type="f">ontzondigd</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Hebt Ge, als Godlijk <rhyme label="a" type="m" corresp="#s5:l1">Heil-Profeet</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Ons den weg des Heils <rhyme label="b" type="f" corresp="#s5:l2">verkondigd</rhyme>;</l>
        <l id="s5:l5" met="4" type="+-">Toen is 't <rhyme label="c" type="m">Euangelie-woord</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Uit Uw' eigen mond, <rhyme label="c" type="m" corresp="#s5:l5">gehoord</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Nu, daer Gij Uw werk <rhyme label="a" type="m">volbracht</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Zijt Ge op 's Vaders troon <rhyme label="b" type="f">verheven</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Om, als Koning, groot in <rhyme label="a" type="m" corresp="#s6:l1">macht</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Uw bevel aen de aerd' te <rhyme label="b" type="f" corresp="#s6:l2">geven</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">En wij zien, omstuwd met <rhyme label="c" type="m">eer</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">U, van daer, als Richter <rhyme label="c" type="m" corresp="#s6:l5">weêr</rhyme>. -</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Leer ons, volgende Uwe <rhyme label="a" type="m">schreên</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Steeds geduldig in het <rhyme label="b" type="f">lijden</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">'t Pad van zuiv're deugd <rhyme label="a" type="m" corresp="#s7:l1">betreên</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Door 't Geloof ons hart U <rhyme label="b" type="f" corresp="#s7:l2">wijden</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Ja, zo wel in vreugde als <rhyme label="c" type="m">pijn</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Aen Uw woord gehoorzaem <rhyme label="c" type="m" corresp="#s7:l5">zijn</rhyme>.</l>
      </lg>
    </lg>
  </text>

  <author>Pieter Datheen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">MYN hert heff' ick tot v <rhyme label="a" type="f">Heere</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Myn hop' alleyn op v <rhyme label="b" type="m">staet</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Behoedt my doch voor <rhyme label="a" type="f" corresp="#s1:l1">oneere</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Die my wenscht myn viandt <rhyme label="b" type="m" corresp="#s1:l2">quaedt</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Se werden HEER, soo't <rhyme label="c" type="m">betaemt</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Niet schaemroot die op v <rhyme label="d" type="f">bauwen</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Maer se sullen sijn <rhyme label="c" type="m" corresp="#s1:l5">beschaemt</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Die de vrome hier <rhyme label="d" type="f" corresp="#s1:l6">benauwen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Heer wyst my doch uwe <rhyme label="a" type="f">weghen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Die ghy wilt dat ick sal <rhyme label="b" type="m">gaen</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Tot den seluen maeckt <rhyme label="a" type="f" corresp="#s2:l1">ghenegen</rhyme></l>
        <l id="s2:l4" met="4" type="+-">My, end doet my die <rhyme label="b" type="m" corresp="#s2:l2">verstaen</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Leert end stiert my nae v <rhyme label="c" type="m">Woort</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">In uwe waerheit <rhyme label="d" type="f">gepresen</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Ghy sijt myn help, dies nu <rhyme label="c" type="m" corresp="#s2:l5">voort</rhyme></l>
        <l id="s2:l8" met="4" type="+-">Wacht ick op v, in dit <rhyme label="d" type="f" corresp="#s2:l6">wesen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Gedenckt Heer aen v <rhyme label="a" type="f">goetheden</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Stelt v voor ooghen voort <rhyme label="b" type="m">aen</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">V' groote <rhyme label="a" type="f" corresp="#s3:l1">barmherticheden</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Die ghy voormaels hebt <rhyme label="b" type="m" corresp="#s3:l2">gedaen</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Doch vergeett die sonden <rhyme label="c" type="m">swaer</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Myner jongheit seer <rhyme label="d" type="f">lichtuęrdigh</rhyme></l>
        <l id="s3:l7" met="4" type="+-">Gedenckt myns goedtlick <rhyme label="c" type="m" corresp="#s3:l5">eenpaer</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Tot myn helpe sijt <rhyme label="d" type="f" corresp="#s3:l6">volvęrdigh</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Godt is waerachtigh end <rhyme label="a" type="f">goedigh</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Hy is't end blyft sulcks <rhyme label="b" type="m">altyt</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Ten weghe bringht hy <rhyme label="a" type="f" corresp="#s4:l1">sachtmoedigh</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Den sondaer veruallen <rhyme label="b" type="m" corresp="#s4:l2">wijdt</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">Den ootmoedigen leert <rhyme label="c" type="m">hy</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Syn godtsaelige <rhyme label="d" type="f">voetpaeden</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Hy toont oock sijn weghen <rhyme label="c" type="m" corresp="#s4:l5">vry</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Den armen menschen <rhyme label="d" type="f" corresp="#s4:l6">belaeden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Goetheit end waerheit <rhyme label="a" type="f">verheuen</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Syn des Heeren weghen <rhyme label="b" type="m">al</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Voor hem die daer nae sijn <rhyme label="a" type="f" corresp="#s5:l1">leuen</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">End sijn ghanghen rechten <rhyme label="b" type="m" corresp="#s5:l2">sal</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">O Heer doer uwen Naem <rhyme label="c" type="m">klaer</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Wilt my goedighlick myn <rhyme label="d" type="f">sonden</rhyme></l>
        <l id="s5:l7" met="4" type="+-">Vergeuen, Want seere <rhyme label="c" type="m" corresp="#s5:l5">swaer</rhyme></l>
        <l id="s5:l8" met="4" type="+-">Ende groot sijn se <rhyme label="d" type="f" corresp="#s5:l6">beuonden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Wie is hy die altyt <rhyme label="a" type="f">spoedigh</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Onsen Godt vreest bouen <rhyme label="b" type="m">al</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Die werdt gheleert <rhyme label="a" type="f" corresp="#s6:l1">ouervloedigh</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Van den wegh die hy gaen <rhyme label="b" type="m" corresp="#s6:l2">sal</rhyme>.</l>
        <l id="s6:l5" met="4" type="+-">Die sal besitten sijn <rhyme label="c" type="m">goedt</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Met stilheit ende met <rhyme label="d" type="f">vrede</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">Sijn saedt sal in <rhyme label="c" type="m" corresp="#s6:l5">ouervloet</rhyme>,</l>
        <l id="s6:l8" met="4" type="+-">Het landt oock besitten <rhyme label="d" type="f" corresp="#s6:l6">mede</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Die verborgenheit des <rhyme label="a" type="f">Heeren</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Is den mensch' <rhyme label="b" type="m">geopenbaert</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Die Godt vreest end houdt in <rhyme label="a" type="f" corresp="#s7:l1">eeren</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">End sijn verbondt wel <rhyme label="b" type="m" corresp="#s7:l2">bewaert</rhyme>.</l>
        <l id="s7:l5" met="4" type="+-">Myn hert' ende myn <rhyme label="c" type="m">gemoedt</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Op den Heer hen alleyn <rhyme label="d" type="f">setten</rhyme>,</l>
        <l id="s7:l7" met="4" type="+-">Want hy maeckt vry mynen <rhyme label="c" type="m" corresp="#s7:l5">voet</rhyme>,</l>
        <l id="s7:l8" met="4" type="+-">Wt al der Godtloosen <rhyme label="d" type="f" corresp="#s7:l6">netten</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Siet my aen met goeder <rhyme label="a" type="f">herten</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Hebt doch metlyden met <rhyme label="b" type="m">my</rhyme>.</l>
        <l id="s8:l3" met="4" type="+-">Want eensaem ende vol <rhyme label="a" type="f" corresp="#s8:l1">smerten</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Ben ick Heer end gantsch <rhyme label="b" type="m" corresp="#s8:l2">onvry</rhyme>.</l>
        <l id="s8:l5" met="4" type="+-">Ick werde seere <rhyme label="c" type="m">benauwt</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Daeghlicks werdt grooter myn <rhyme label="d" type="f">lyden</rhyme>,</l>
        <l id="s8:l7" met="4" type="+-">Helpt my Heer die v <rhyme label="c" type="m" corresp="#s8:l5">vertrauwt</rhyme>,</l>
        <l id="s8:l8" met="4" type="+-">Wt den noot in desen <rhyme label="d" type="f" corresp="#s8:l6">tyden</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Myn jammer wilt doch <rhyme label="a" type="f">aenmercken</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Mynen angst end noot <rhyme label="b" type="m">aensiet</rhyme>.</l>
        <l id="s9:l3" met="4" type="+-">Myn sonden end boose <rhyme label="a" type="f" corresp="#s9:l1">wercken</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Vergheeft my goedlick om <rhyme label="b" type="m" corresp="#s9:l2">niet</rhyme>.</l>
        <l id="s9:l5" met="4" type="+-">Siet hoe die vianden <rhyme label="c" type="m">myn</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">Moedtwillighlick bouen <rhyme label="d" type="f">maeten</rhyme>,</l>
        <l id="s9:l7" met="4" type="+-">Die groot van ghetalle <rhyme label="c" type="m" corresp="#s9:l5">sijn</rhyme>,</l>
        <l id="s9:l8" met="4" type="+-">My seer viandelick <rhyme label="d" type="f" corresp="#s9:l6">haeten</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Voor haer list myn siel <rhyme label="a" type="f">bewaeren</rhyme>,</l>
        <l id="s10:l2" met="4" type="+-">Verlost my dat ick met <rhyme label="b" type="m">smaet</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">End met schand' niet sij <rhyme label="a" type="f" corresp="#s10:l1">beswaeret</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">Want ghy sijt myn <rhyme label="b" type="m" corresp="#s10:l2">toeuerlaet</rhyme>.</l>
        <l id="s10:l5" met="4" type="+-">Slecht recht ben ick my <rhyme label="c" type="m">behoedt</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">Want ick sal Heer v <rhyme label="d" type="f">verwachten</rhyme>,</l>
        <l id="s10:l7" met="4" type="+-">Israel wt <rhyme label="c" type="m" corresp="#s10:l5">teghenspoedt</rhyme>,</l>
        <l id="s10:l8" met="4" type="+-">Verlost oock doer uwe <rhyme label="d" type="f" corresp="#s10:l6">krachten</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

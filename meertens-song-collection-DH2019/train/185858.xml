<song>
  <meta>
    <id>185858</id>
    <date>
      <year-start>1605</year-start>
      <year-end>1605</year-end>
    </date>
    <location>
      <orginal-name>leuven</orginal-name>
      <standard-name>Leuven, Belgium</standard-name>
      <coordinates>
        <lon>50.879202</lon>
        <lat>4.7011675</lat>
      </coordinates>
    </location>
    <tags/>
    <melody>Schoon liefje jent zeer excellent</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">O Christen <rhyme label="a" type="m">och</rhyme></l>
        <l id="s1:l2" met="2" type="-+">Die leven <rhyme label="a" type="m" corresp="#s1:l1">noch</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Wilt Gods eer <rhyme label="b" type="f">vermeeren</rhyme></l>
        <l id="s1:l4" met="2" type="-+">Sonder <rhyme label="a" type="m" corresp="#s1:l1">bedroch</rhyme></l>
        <l id="s1:l5" met="2" type="-+">Wilt soecken <rhyme label="a" type="m" corresp="#s1:l1">toch</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Ierusalem <rhyme label="a" type="m" corresp="#s1:l1">bedoch</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Die Ecclesie vol <rhyme label="b" type="f" corresp="#s1:l3">eeren</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Die waerheyt <rhyme label="a" type="m">bekent</rhyme></l>
        <l id="s2:l2" met="2" type="-+">Seer <rhyme label="a" type="m" corresp="#s2:l1">excellent</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Sal altijt by haer <rhyme label="b" type="f">blijven</rhyme></l>
        <l id="s2:l4" met="2" type="-+">Haer <rhyme label="a" type="m" corresp="#s2:l1">fondament</rhyme></l>
        <l id="s2:l5" met="2" type="-+">Dat is <rhyme label="a" type="m" corresp="#s2:l1">gheprent</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Op Gods belooften <rhyme label="a" type="m" corresp="#s2:l1">ient</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Als die Propheten <rhyme label="b" type="f" corresp="#s2:l3">schrijven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Dit is mijn <rhyme label="a" type="m">verbont</rhyme></l>
        <l id="s3:l2" met="2" type="-+">Tot aller <rhyme label="a" type="m" corresp="#s3:l1">stont</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Met haerlieder seyt die <rhyme label="b" type="f">Heere</rhyme></l>
        <l id="s3:l4" met="2" type="-+">Mijn Gheest <rhyme label="a" type="m" corresp="#s3:l1">oorkont</rhyme></l>
        <l id="s3:l5" met="2" type="-+">Mijn woort goet <rhyme label="a" type="m" corresp="#s3:l1">ront</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Heb ick gheset in haren <rhyme label="a" type="m" corresp="#s3:l1">mont</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Dat en sal van haer niet <rhyme label="b" type="f" corresp="#s3:l3">keren</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">O is nu met <rhyme label="a" type="m">mijn</rhyme></l>
        <l id="s4:l2" met="2" type="-+">Als in die daghen <rhyme label="a" type="m" corresp="#s4:l1">fijn</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Van Noe dien ic had <rhyme label="b" type="f">gesworen</rhyme></l>
        <l id="s4:l4" met="2" type="-+">Dat ick op dat <rhyme label="a" type="m" corresp="#s4:l1">termijn</rhyme></l>
        <l id="s4:l5" met="2" type="-+">Die wateren <rhyme label="a" type="m" corresp="#s4:l1">fijn</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Niet meer sou brengende <rhyme label="a" type="m" corresp="#s4:l1">zijn</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Op die aerde als <rhyme label="b" type="f" corresp="#s4:l3">vooren</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Also <rhyme label="a" type="m">voorwaer</rhyme></l>
        <l id="s5:l2" met="2" type="-+">Beloof ick <rhyme label="a" type="m" corresp="#s5:l1">haer</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Op haer niet gram <rhyme label="b" type="f">wesen</rhyme></l>
        <l id="s5:l4" met="2" type="-+">Noch int <rhyme label="a" type="m" corresp="#s5:l1">openbaer</rhyme></l>
        <l id="s5:l5" met="2" type="-+">Te nemen van <rhyme label="a" type="m" corresp="#s5:l1">haer</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Mijn bermherticheyt <rhyme label="a" type="m" corresp="#s5:l1">claer</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Noch haer straffen by <rhyme label="b" type="f" corresp="#s5:l3">desen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Die bergen <rhyme label="a" type="m">hoort</rhyme></l>
        <l id="s6:l2" met="2" type="-+">Sullen worden <rhyme label="a" type="m" corresp="#s6:l1">beroert</rhyme></l>
        <l id="s6:l3" met="3" type="-+">En die hemelen sullen <rhyme label="b" type="f">beven</rhyme></l>
        <l id="s6:l4" met="2" type="-+">Maer mijn beloften <rhyme label="a" type="m" corresp="#s6:l1">hoort</rhyme></l>
        <l id="s6:l5" met="2" type="-+">Verstaet dit <rhyme label="a" type="m" corresp="#s6:l1">woort</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Sullen niet werden <rhyme label="a" type="m" corresp="#s6:l1">verstoort</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Seyt die Heere <rhyme label="b" type="f" corresp="#s6:l3">verheven</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="2" type="-+">Ghy sult niet <rhyme label="a" type="m">meer</rhyme></l>
        <l id="s7:l2" met="2" type="-+">Seyt God die <rhyme label="a" type="m" corresp="#s7:l1">Heer</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Die verloren stadt <rhyme label="b" type="f">wesen</rhyme></l>
        <l id="s7:l4" met="2" type="-+">Maer die gesochte <rhyme label="a" type="m" corresp="#s7:l1">seer</rhyme></l>
        <l id="s7:l5" met="2" type="-+">Vol prijs en <rhyme label="a" type="m" corresp="#s7:l1">eer</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Een croon der glorien <rhyme label="a" type="m" corresp="#s7:l1">meer</rhyme></l>
        <l id="s7:l7" met="3" type="-+">In des Heeren hant <rhyme label="b" type="f" corresp="#s7:l3">gepresen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="2" type="-+">Die beloften <rhyme label="a" type="m">bly</rhyme></l>
        <l id="s8:l2" met="2" type="-+">Die hebben <rhyme label="a" type="m" corresp="#s8:l1">wy</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Die Christus ons heeft <rhyme label="b" type="f">gegeven</rhyme></l>
        <l id="s8:l4" met="2" type="-+">Ick blijf v <rhyme label="a" type="m" corresp="#s8:l1">by</rhyme></l>
        <l id="s8:l5" met="2" type="-+">T’allen dagen <rhyme label="a" type="m" corresp="#s8:l1">vry</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Tot die voleyndinghe <rhyme label="a" type="m" corresp="#s8:l1">zy</rhyme></l>
        <l id="s8:l7" met="3" type="-+">Van dien werelt <rhyme label="b" type="f" corresp="#s8:l3">verheven</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="2" type="-+">Die poorten <rhyme label="a" type="m">verdreyt</rhyme></l>
        <l id="s9:l2" met="2" type="-+">Van die helle <rhyme label="a" type="m" corresp="#s9:l1">verbreyt</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Sullen tegen haer niet <rhyme label="b" type="f">mogen</rhyme>,</l>
        <l id="s9:l4" met="2" type="-+">Paulus <rhyme label="a" type="m" corresp="#s9:l1">seyt</rhyme></l>
        <l id="s9:l5" met="2" type="-+">Met claer <rhyme label="a" type="m" corresp="#s9:l1">bescheyt</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Een Columme des <rhyme label="a" type="m" corresp="#s9:l1">waerheyt</rhyme></l>
        <l id="s9:l7" met="3" type="-+">Een vasten gront voor <rhyme label="b" type="f" corresp="#s9:l3">ogen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="2" type="-+">Wie hoort v <rhyme label="a" type="m">raet</rhyme></l>
        <l id="s10:l2" met="2" type="-+">Niet <rhyme label="a" type="m" corresp="#s10:l1">opstinaet</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Die hoort mijn oock <rhyme label="b" type="f">mede</rhyme></l>
        <l id="s10:l4" met="2" type="-+">Wie v <rhyme label="a" type="m" corresp="#s10:l1">versmaet</rhyme></l>
        <l id="s10:l5" met="2" type="-+">Met sinnen <rhyme label="a" type="m" corresp="#s10:l1">quaet</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Versmaet mijn metter <rhyme label="a" type="m" corresp="#s10:l1">daet</rhyme></l>
        <l id="s10:l7" met="3" type="-+">Die v gesonden heeft ter <rhyme label="b" type="f" corresp="#s10:l3">stede</rhyme></l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="2" type="-+">Schort v <rhyme label="a" type="m">yet</rhyme></l>
        <l id="s11:l2" met="2" type="-+">Segt het die kercke <rhyme label="a" type="m" corresp="#s11:l1">siet</rhyme></l>
        <l id="s11:l3" met="3" type="-+">Zeyt die Heere <rhyme label="b" type="f">voortane</rhyme></l>
        <l id="s11:l4" met="2" type="-+">Hoort hy die kercke <rhyme label="a" type="m" corresp="#s11:l1">niet</rhyme></l>
        <l id="s11:l5" met="2" type="-+">Verstaet dit <rhyme label="a" type="m" corresp="#s11:l1">bediet</rhyme></l>
        <l id="s11:l6" met="3" type="-+">Zo wilt hem houden <rhyme label="a" type="m" corresp="#s11:l1">siet</rhyme></l>
        <l id="s11:l7" met="3" type="-+">Voor een heyden en <rhyme label="b" type="f" corresp="#s11:l3">publicane</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="2" type="-+">Iohannes <rhyme label="a" type="m">daer</rhyme></l>
        <l id="s12:l2" met="2" type="-+">Die sach <rhyme label="a" type="m" corresp="#s12:l1">eenpaer</rhyme></l>
        <l id="s12:l3" met="3" type="-+">Dit Ierusalem neer <rhyme label="b" type="f">dalen</rhyme>,</l>
        <l id="s12:l4" met="2" type="-+">Haer fondamenten <rhyme label="a" type="m" corresp="#s12:l1">claer</rhyme></l>
        <l id="s12:l5" met="2" type="-+">Die sijn <rhyme label="a" type="m" corresp="#s12:l1">voorwaer</rhyme></l>
        <l id="s12:l6" met="3" type="-+">Die Apostelen <rhyme label="a" type="m" corresp="#s12:l1">eerbaer</rhyme></l>
        <l id="s12:l7" met="3" type="-+">Och menschen wilt niet <rhyme label="b" type="f" corresp="#s12:l3">dwalen</rhyme></l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="2" type="-+">Heylich is <rhyme label="a" type="m">zy</rhyme></l>
        <l id="s13:l2" met="2" type="-+">God blijf haer <rhyme label="a" type="m" corresp="#s13:l1">by</rhyme></l>
        <l id="s13:l3" met="3" type="-+">Die bruyt des lans <rhyme label="b" type="f">huysvrouwe</rhyme></l>
        <l id="s13:l4" met="2" type="-+">Gods claerheyt <rhyme label="a" type="m" corresp="#s13:l1">bly</rhyme></l>
        <l id="s13:l5" met="2" type="-+">Verlicht haer <rhyme label="a" type="m" corresp="#s13:l1">vry</rhyme></l>
        <l id="s13:l6" met="3" type="-+">Son noch Maen behoevet <rhyme label="a" type="m" corresp="#s13:l1">zy</rhyme></l>
        <l id="s13:l7" met="3" type="-+">Haer licht is t’lam <rhyme label="b" type="f" corresp="#s13:l3">getrouwe</rhyme></l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="2" type="-+">Als Iaspis <rhyme label="a" type="m">Christalijn</rhyme></l>
        <l id="s14:l2" met="2" type="-+">So licht haer <rhyme label="a" type="m" corresp="#s14:l1">schijn</rhyme></l>
        <l id="s14:l3" met="3" type="-+">Van gout so zijn haer <rhyme label="b" type="f">straten</rhyme></l>
        <l id="s14:l4" met="2" type="-+">Die Coningen <rhyme label="a" type="m" corresp="#s14:l1">zijn</rhyme></l>
        <l id="s14:l5" met="2" type="-+">Haer voester-heeren <rhyme label="a" type="m" corresp="#s14:l1">fijn</rhyme></l>
        <l id="s14:l6" met="3" type="-+">Geen nacht sal in haer <rhyme label="a" type="m" corresp="#s14:l1">sijn</rhyme></l>
        <l id="s14:l7" met="3" type="-+">God en sal haer niet <rhyme label="b" type="f" corresp="#s14:l3">verlaten</rhyme></l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="2" type="-+">Die Coningen van <rhyme label="a" type="m">veer</rhyme></l>
        <l id="s15:l2" met="2" type="-+">Die doen haer <rhyme label="a" type="m" corresp="#s15:l1">eer</rhyme>,</l>
        <l id="s15:l3" met="3" type="-+">Met neergheslaghen <rhyme label="b" type="f">hoofde</rhyme></l>
        <l id="s15:l4" met="2" type="-+">Aenbidden haer <rhyme label="a" type="m" corresp="#s15:l1">zeer</rhyme></l>
        <l id="s15:l5" met="2" type="-+">Ter aerden <rhyme label="a" type="m" corresp="#s15:l1">neer</rhyme>,</l>
        <l id="s15:l6" met="3" type="-+">En cussen dat is <rhyme label="a" type="m" corresp="#s15:l1">meer</rhyme></l>
        <l id="s15:l7" met="3" type="-+">Haer voeten met <rhyme label="b" type="f" corresp="#s15:l3">ootmoedt</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="2" type="-+">O Ierusalem <rhyme label="a" type="m">clear</rhyme></l>
        <l id="s16:l2" met="2" type="-+">O Engelsche <rhyme label="a" type="m" corresp="#s16:l1">schaer</rhyme></l>
        <l id="s16:l3" met="3" type="-+">In v rust Godt <rhyme label="b" type="f">verheven</rhyme></l>
        <l id="s16:l4" met="2" type="-+">Hy seyt <rhyme label="a" type="m" corresp="#s16:l1">voorwaer</rhyme></l>
        <l id="s16:l5" met="2" type="-+">Met woorden <rhyme label="a" type="m" corresp="#s16:l1">claer</rhyme></l>
        <l id="s16:l6" met="3" type="-+">Mijn wille is in <rhyme label="a" type="m" corresp="#s16:l1">haer</rhyme></l>
        <l id="s16:l7" met="3" type="-+">In mijn hant zijt gy <rhyme label="b" type="f" corresp="#s16:l3">geschreven</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="2" type="-+">Op aerden <rhyme label="a" type="m">ydoon</rhyme></l>
        <l id="s17:l2" met="2" type="-+">In s’hemels <rhyme label="a" type="m" corresp="#s17:l1">throon</rhyme></l>
        <l id="s17:l3" met="3" type="-+">Zijt ghy een <rhyme label="b" type="f">gemeene</rhyme></l>
        <l id="s17:l4" met="2" type="-+">Die Engelen <rhyme label="a" type="m" corresp="#s17:l1">schoon</rhyme></l>
        <l id="s17:l5" met="2" type="-+">Leert Paulus <rhyme label="a" type="m" corresp="#s17:l1">coen</rhyme></l>
        <l id="s17:l6" met="3" type="-+">Die zijn uwe <rhyme label="a" type="m" corresp="#s17:l1">dienstboon</rhyme></l>
        <l id="s17:l7" met="3" type="-+">O Christenen groot en <rhyme label="b" type="f" corresp="#s17:l3">cleene</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="2" type="-+">Daer is <rhyme label="a" type="m">minjoot</rhyme></l>
        <l id="s18:l2" met="2" type="-+">Die blijschap <rhyme label="a" type="m" corresp="#s18:l1">groot</rhyme></l>
        <l id="s18:l3" met="3" type="-+">Al in des Hemels <rhyme label="b" type="f">throne</rhyme></l>
        <l id="s18:l4" met="2" type="-+">Als daer een sondaer <rhyme label="a" type="m" corresp="#s18:l1">bloot</rhyme>,</l>
        <l id="s18:l5" met="2" type="-+">Met groot <rhyme label="a" type="m" corresp="#s18:l1">ootmoet</rhyme>,</l>
        <l id="s18:l6" met="3" type="-+">Oprechte penitentie <rhyme label="a" type="m" corresp="#s18:l1">doet</rhyme></l>
        <l id="s18:l7" met="3" type="-+">Seyt Christus in <rhyme label="b" type="f" corresp="#s18:l3">persone</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="2" type="-+">Oorlof broeders <rhyme label="a" type="m">soet</rhyme></l>
        <l id="s19:l2" met="2" type="-+">Met groot <rhyme label="a" type="m" corresp="#s19:l1">ootmoet</rhyme></l>
        <l id="s19:l3" met="3" type="-+">Wilt v verstant <rhyme label="b" type="f">verneren</rhyme></l>
        <l id="s19:l4" met="2" type="-+">Onder <rhyme label="a" type="m" corresp="#s19:l1">t’behoet</rhyme></l>
        <l id="s19:l5" met="2" type="-+">Al metter <rhyme label="a" type="m" corresp="#s19:l1">spoet</rhyme></l>
        <l id="s19:l6" met="3" type="-+">Van die heylige Kercke <rhyme label="a" type="m" corresp="#s19:l1">goet</rhyme></l>
        <l id="s19:l7" met="3" type="-+">Godt sal v geloof <rhyme label="b" type="f" corresp="#s19:l3">vermeeren</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

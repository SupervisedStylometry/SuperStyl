  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">LOf Jesu <rhyme label="a" type="m">Pelicaen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Die neemt ons menscheyt <rhyme label="a" type="m" corresp="#s1:l1">aen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">En laet u Lichaem <rhyme label="b" type="f">wonden</rhyme>:</l>
        <l id="s1:l4" met="3" type="-+">Dat ghy ons door u <rhyme label="c" type="m">Bloedt</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Gestort in <rhyme label="c" type="m" corresp="#s1:l4">over-vloedt</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Genesen soudt van <rhyme label="b" type="f" corresp="#s1:l3">sonden</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Noch, tot een <rhyme label="a" type="m">Testament</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">In 't Heylig <rhyme label="a" type="m" corresp="#s2:l1">Sacrament</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Hebt ghy u self <rhyme label="b" type="f">gegeven</rhyme>.</l>
        <l id="s2:l4" met="3" type="-+">Dat, wien die spijse <rhyme label="c" type="m">voedt</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Sy hem in gracie <rhyme label="c" type="m" corresp="#s2:l4">doet</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Hier ende naemaels <rhyme label="b" type="f" corresp="#s2:l3">leven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Och! wy en zijn, o <rhyme label="a" type="m">Heer</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Niet weerdigh dese <rhyme label="a" type="m" corresp="#s3:l1">eer</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Wy zijn onnutte <rhyme label="b" type="f">slaven</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Maer want ghy 't soo <rhyme label="c" type="m">begeert</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Maeckt ons u Dienaers <rhyme label="c" type="m" corresp="#s3:l4">weerdt</rhyme></l>
        <l id="s3:l6" met="3" type="-+">t' Ontfangen dese <rhyme label="b" type="f" corresp="#s3:l3">gaven</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Vergeeft der sonden <rhyme label="a" type="m">schult</rhyme>:</l>
        <l id="s4:l2" met="3" type="-+">En komt dan met <rhyme label="a" type="m" corresp="#s4:l1">gedult</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Ons arme Ziele <rhyme label="b" type="f">spijsen</rhyme>.</l>
        <l id="s4:l4" met="3" type="-+">Verleent, dat, van de <rhyme label="c" type="m">doodt</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Wy, door dit Hemels <rhyme label="c" type="m" corresp="#s4:l4">Broodt</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Ter deughden weer <rhyme label="b" type="f" corresp="#s4:l3">verrijsen</rhyme>.</l>
      </lg>
    </lg>
  </text>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Speelnootjes wilt <rhyme label="a" type="f">Vercieren</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Haer Hoofde met een <rhyme label="b" type="m">Krans</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Van Bloemen en <rhyme label="a" type="f" corresp="#s1:l1">Lauw'rieren</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En maeckt met haer een <rhyme label="b" type="m" corresp="#s1:l2">dans</rhyme>:</l>
        <l id="s1:l5" met="3" type="-+">Bruydt Anna leydt te <rhyme label="c" type="m">bedt</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Na Junoos oude <rhyme label="c" type="m" corresp="#s1:l5">Wet</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Daer 't kleyn Kint haer <rhyme label="d" type="m">verwacht</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">En schut de Pluymkens <rhyme label="d" type="m" corresp="#s1:l7">sacht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">U Snaer-gespel laet <rhyme label="a" type="f">hooren</rhyme>;</l>
        <l id="s2:l2" met="3" type="-+">Orpheus selfs slaet <rhyme label="b" type="m">maet</rhyme>:</l>
        <l id="s2:l3" met="3" type="-+">U vreughde wilt niet <rhyme label="a" type="f" corresp="#s2:l1">smooren</rhyme>:</l>
        <l id="s2:l4" met="3" type="-+">t'Sa zinght, juycht, lacht, vrijt, <rhyme label="b" type="m" corresp="#s2:l2">praet</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">Al leyt het Paer in <rhyme label="c" type="m">lust</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Yder zijn Speelnoot <rhyme label="c" type="m" corresp="#s2:l5">kust</rhyme>:</l>
        <l id="s2:l7" met="3" type="-+">Drinckt noch een Fluytjen <rhyme label="d" type="m">uyt</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Op 't Welvaert van de <rhyme label="d" type="m" corresp="#s2:l7">Bruydt</rhyme>.</l>
      </lg>
    </lg>

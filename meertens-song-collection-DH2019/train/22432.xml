    <melody>Nun freut euch liebe Christen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Goede Godt in <rhyme label="a" type="m">eewicheyt</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Onsen Vader en <rhyme label="b" type="f">Heere</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Tot u weent al die <rhyme label="a" type="m" corresp="#s1:l1">Christenheyt</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Om u ghenade <rhyme label="b" type="f" corresp="#s1:l2">seere</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">Laet die haest tot ons vloeyen <rhyme label="c" type="m">claer</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Dat wy die sonden nemen <rhyme label="c" type="m" corresp="#s1:l5">waer</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">En die voor u <rhyme label="d" type="f">bekennen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Want wy hebben ghesondicht <rhyme label="a" type="m">veel</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Doende <rhyme label="b" type="f">Afgoderije</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Met pracht, nijt, haet, vloecken, en <rhyme label="a" type="m" corresp="#s2:l1">speel</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Oock doende <rhyme label="b" type="f" corresp="#s2:l2">hoererije</rhyme>:</l>
        <l id="s2:l5" met="4" type="-+">Met achterclap en ontrouwe <rhyme label="c" type="m">groot</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Die wy ghedaen hebben seer <rhyme label="c" type="m" corresp="#s2:l5">bloot</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Listelijck teghen den <rhyme label="d" type="f">armen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Dijn Goddelijck woort hebben wy <rhyme label="a" type="m">veracht</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Ende niet waer <rhyme label="b" type="f">ghenomen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Dijn leere en weldaet niet <rhyme label="a" type="m" corresp="#s3:l1">bedacht</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Daerom is ouer ons <rhyme label="b" type="f" corresp="#s3:l2">comen</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Die Roede dijner straffen <rhyme label="c" type="m">hier</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Daermet ghy staet en betert <rhyme label="c" type="m" corresp="#s3:l5">schier</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Die Schaepkens van dijnen <rhyme label="d" type="f">stalle</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Met cranckheyt groot syn wy <rhyme label="a" type="m">beuaen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Daer door veel menschen <rhyme label="b" type="f">steruen</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Met dieren tijt oock seer <rhyme label="a" type="m" corresp="#s4:l1">belaen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Waer door die menschen <rhyme label="b" type="f" corresp="#s4:l2">verderuen</rhyme>:</l>
        <l id="s4:l5" met="4" type="-+">Den Torck benauwet ons met <rhyme label="c" type="m">macht</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Hy valt ons aen met syn <rhyme label="c" type="m" corresp="#s4:l5">heyrcracht</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Om die Christenen te <rhyme label="d" type="f">moorden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Nochtans can niemant spreken <rhyme label="a" type="m">wel</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Dat ghy ons straft <rhyme label="b" type="f">onbeschuldich</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Dijn straf verdienen wy, dy <rhyme label="a" type="m" corresp="#s5:l1">rebel</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Met sonden <rhyme label="b" type="f" corresp="#s5:l2">menichuuldich</rhyme>:</l>
        <l id="s5:l5" met="4" type="-+">U straf en oordeel recht <rhyme label="c" type="m">toegaet</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Ouer ons die daer hebben <rhyme label="c" type="m" corresp="#s5:l5">versmaet</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Dijn woort ende dijn <rhyme label="d" type="f">gheboden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Maer om dat ghy ons Vader <rhyme label="a" type="m">zijt</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Willen wy niet <rhyme label="b" type="f">aflaeten</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">Te schreyen droeuelijck <rhyme label="a" type="m" corresp="#s6:l1">altijt</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Hoepende tonser <rhyme label="b" type="f" corresp="#s6:l2">baeten</rhyme>:</l>
        <l id="s6:l5" met="4" type="-+">Als wy gheloouich u roepen <rhyme label="c" type="m">aen</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Ghy en sult ons hier niet <rhyme label="c" type="m" corresp="#s6:l5">afgaen</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Maer ons bede wel <rhyme label="d" type="f">aenhooren</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Daerom o Heer der <rhyme label="a" type="m">guedicheyt</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Wilt onser nu <rhyme label="b" type="f">ontfermen</rhyme>:</l>
        <l id="s7:l3" met="4" type="-+">Helpt dijne arme <rhyme label="a" type="m" corresp="#s7:l1">Christenheyt</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Ghedenckt aen ons groot <rhyme label="b" type="f" corresp="#s7:l2">kermen</rhyme>.</l>
        <l id="s7:l5" met="4" type="-+">Gheschut, noch wapen gelden <rhyme label="c" type="m">niet</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Als men u Heere niet helpen <rhyme label="c" type="m" corresp="#s7:l5">siet</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">die Torcken voor ons <rhyme label="d" type="f">drijuen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Ghy hebt gheholpen dit is <rhyme label="a" type="m">bekent</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Dat volck van <rhyme label="b" type="f">Israhele</rhyme>:</l>
        <l id="s8:l3" met="4" type="-+">Als hem den vyant was <rhyme label="a" type="m" corresp="#s8:l1">ontrent</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Brocht ghy die van sdoodes <rhyme label="b" type="f" corresp="#s8:l2">quele</rhyme>:</l>
        <l id="s8:l5" met="4" type="-+">So deet ghy Heere <rhyme label="c" type="m">Josue</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Dauidt, Judith, en Gedeon <rhyme label="c" type="m" corresp="#s8:l5">me</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">So die schrift ons doet <rhyme label="d" type="f">oorconden</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Als u dat volck vertoornet <rhyme label="a" type="m">heeft</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Door sonden <rhyme label="b" type="f">menigherhande</rhyme>:</l>
        <l id="s9:l3" met="4" type="-+">En door misdaet den Goden <rhyme label="a" type="m" corresp="#s9:l1">gheeft</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Verboden <rhyme label="b" type="f" corresp="#s9:l2">Offerhande</rhyme>:</l>
        <l id="s9:l5" met="4" type="-+">Haer Vyanden vielen int <rhyme label="c" type="m">lant</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Verderuende met roof en <rhyme label="c" type="m" corresp="#s9:l5">brant</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Straffende <rhyme label="d" type="f">Afgoderije</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Maer sy keerden weder tot <rhyme label="a" type="m">dy</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Als sy benauwet <rhyme label="b" type="f">waren</rhyme>:</l>
        <l id="s10:l3" met="4" type="-+">En riepen daer om hulpe <rhyme label="a" type="m" corresp="#s10:l1">vry</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Biddende sonder <rhyme label="b" type="f" corresp="#s10:l2">sparen</rhyme>.</l>
        <l id="s10:l5" met="4" type="-+">Doen hielpt ghy hem in haren <rhyme label="c" type="m">noot</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">En sloecht voor hem den vyant <rhyme label="c" type="m" corresp="#s10:l5">doot</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Om dijn volck daer te <rhyme label="d" type="f">verlossen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Daerom roepen wy u oock <rhyme label="a" type="m">an</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">In desen noot <rhyme label="b" type="f">ghemeyne</rhyme>:</l>
        <l id="s11:l3" met="4" type="-+">Om ons te helpen en is gheen <rhyme label="a" type="m" corresp="#s11:l1">man</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Dan ghy o Godt <rhyme label="b" type="f" corresp="#s11:l2">alleyne</rhyme>.</l>
        <l id="s11:l5" met="4" type="-+">Vergheeft ons sonden <rhyme label="c" type="m">altemael</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">Verlost ons van des doodes <rhyme label="c" type="m" corresp="#s11:l5">quael</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">En wilt ons vyanden <rhyme label="d" type="f">veriaghen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">O Godt Vader die niet <rhyme label="a" type="m">beswijckt</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Wilt ons ghebet <rhyme label="b" type="f">verhooren</rhyme>:</l>
        <l id="s12:l3" met="4" type="-+">Dijn hulpe ouer u Schaepkens <rhyme label="a" type="m" corresp="#s12:l1">strijckt</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Wilt u vyants heyr <rhyme label="b" type="f" corresp="#s12:l2">verstooren</rhyme>:</l>
        <l id="s12:l5" met="4" type="-+">Door dijnen Sone Ihesum <rhyme label="c" type="m">Christ</rhyme>,</l>
        <l id="s12:l6" met="4" type="-+">Vrijt ons van des Antechrists <rhyme label="c" type="m" corresp="#s12:l5">list</rhyme>,</l>
        <l id="s12:l7" met="3" type="-+">So ghy ons claer hebt <rhyme label="d" type="f">belouet</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">O Jhesu Christe Godt ende <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Wilt toch van ons niet <rhyme label="b" type="f">scheyden</rhyme>:</l>
        <l id="s13:l3" met="4" type="-+">Om u selfs goedicheyt en <rhyme label="a" type="m" corresp="#s13:l1">eer</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Laet ons van u niet <rhyme label="b" type="f" corresp="#s13:l2">verleyden</rhyme>:</l>
        <l id="s13:l5" met="4" type="-+">Door dijn Menscheyt en bitter <rhyme label="c" type="m">doot</rhyme>,</l>
        <l id="s13:l6" met="4" type="-+">Verlost ons Heere wt allen <rhyme label="c" type="m" corresp="#s13:l5">noot</rhyme>,</l>
        <l id="s13:l7" met="3" type="-+">En van der Godloosen <rhyme label="d" type="f">banden</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">O Heere Godt heylighe <rhyme label="a" type="m">Gheest</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Wy bidden u al te <rhyme label="b" type="f">samen</rhyme>:</l>
        <l id="s14:l3" met="4" type="-+">Dat ghy verlosset <rhyme label="a" type="m" corresp="#s14:l1">aldermeest</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">Die hier om dijne <rhyme label="b" type="f" corresp="#s14:l2">namen</rhyme>:</l>
        <l id="s14:l5" met="4" type="-+">Strijden teghen die vyanden <rhyme label="c" type="m">dijn</rhyme>,</l>
        <l id="s14:l6" met="4" type="-+">Wilt hem o Heer behulpich <rhyme label="c" type="m" corresp="#s14:l5">zijn</rhyme>,</l>
        <l id="s14:l7" met="3" type="-+">En by dijnen woorde <rhyme label="d" type="f">behouden</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">O Heere Godt in hoochsten <rhyme label="a" type="m">throon</rhyme>,</l>
        <l id="s15:l2" met="3" type="-+">Hooghe <rhyme label="b" type="f">Drijuuldichede</rhyme>:</l>
        <l id="s15:l3" met="4" type="-+">Een Vader, Godt, en Heere <rhyme label="a" type="m" corresp="#s15:l1">schoon</rhyme>,</l>
        <l id="s15:l4" met="3" type="-+">Helpt ons in alle <rhyme label="b" type="f" corresp="#s15:l2">stede</rhyme>.</l>
        <l id="s15:l5" met="4" type="-+">Bewaert ons Heere als wy <rhyme label="c" type="m">zaen</rhyme>,</l>
        <l id="s15:l6" met="4" type="-+">Van hier verscheyden seer <rhyme label="c" type="m" corresp="#s15:l5">belaen</rhyme>,</l>
        <l id="s15:l7" met="3" type="-+">Van allen quaden. <rhyme label="d" type="f">Amen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Albertus Buitendyck</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Met uwe drie <rhyme label="a" type="f">Vingeren</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Heyl'ge <rhyme label="b" type="m">Drievuldigheyt</rhyme>:</l>
        <l id="s1:l3" met="3" type="-+">Bewaert ons uw' <rhyme label="a" type="f" corresp="#s1:l1">kinderen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Door den Werelt <rhyme label="b" type="m" corresp="#s1:l2">verspreyt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ey! laet ons doch niet <rhyme label="a" type="f">dalen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">In d'eeuwige <rhyme label="b" type="m">Afgront</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Die uwen lof <rhyme label="a" type="f" corresp="#s2:l1">verhalen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Met harten, ende <rhyme label="b" type="m" corresp="#s2:l2">mont</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Voor u wy <rhyme label="a" type="f">neder-vallen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Heyl'ge <rhyme label="b" type="m">Drievuldigheydt</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Vergunt nu aen ons <rhyme label="a" type="f" corresp="#s3:l1">allen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Dat niet ons van uw' <rhyme label="b" type="m" corresp="#s3:l2">scheyt</rhyme>:</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">En uw' gheloof te <rhyme label="a" type="f">houwen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En voor te staen uw' <rhyme label="b" type="m">lof</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Geeft ons: daer na t' <rhyme label="a" type="f" corresp="#s4:l1">aenschouwen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Een Godt in 's Hemels <rhyme label="b" type="m" corresp="#s4:l2">Hof</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Godt Vader, wilt ons <rhyme label="a" type="f">geven</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Dat wy u Soonen <rhyme label="b" type="m">zijn</rhyme>;</l>
        <l id="s5:l3" met="3" type="-+">Dat wy soo langh wy <rhyme label="a" type="f" corresp="#s5:l1">leven</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">U dienen sonder <rhyme label="b" type="m" corresp="#s5:l2">schijn</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Gheeft ons door uwe <rhyme label="a" type="f">machten</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Dat ons niet en <rhyme label="b" type="m">manckeert</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">En van sonden te <rhyme label="a" type="f" corresp="#s6:l1">wachten</rhyme>:</l>
        <l id="s6:l4" met="3" type="-+">Ons alle dit <rhyme label="b" type="m" corresp="#s6:l2">vereert</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Uyt den Vader <rhyme label="a" type="f">verresen</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Zijt ghy o Godes <rhyme label="b" type="m">Soon</rhyme>!</l>
        <l id="s7:l3" met="3" type="-+">G'hebt een Goddelijck <rhyme label="a" type="f" corresp="#s7:l1">wesen</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Maer anders in <rhyme label="b" type="m" corresp="#s7:l2">Persoon</rhyme>:</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Na uw' Vaders <rhyme label="a" type="f">begeerte</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Hebt ghy voor ons <rhyme label="b" type="m">voldaen</rhyme>:</l>
        <l id="s8:l3" met="3" type="-+">Aen ons u pijn en <rhyme label="a" type="f" corresp="#s8:l1">seerte</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Laet niet verlooren <rhyme label="b" type="m" corresp="#s8:l2">gaen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Heylige Geest <rhyme label="a" type="f">gesprooten</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Uyt Vader ende 't <rhyme label="b" type="m">Woordt</rhyme>;</l>
        <l id="s9:l3" met="3" type="-+">Ey! wilt ons niet <rhyme label="a" type="f" corresp="#s9:l1">verstooten</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Van uwe liefde <rhyme label="b" type="m" corresp="#s9:l2">koort</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Wilt soo d'harten <rhyme label="a" type="f">ontsteecken</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">O Godt heylige <rhyme label="b" type="m">Geest</rhyme>!</l>
        <l id="s10:l3" met="3" type="-+">Dat wy sonder <rhyme label="a" type="f" corresp="#s10:l1">gebreecken</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">U dienen <rhyme label="b" type="m" corresp="#s10:l2">onbevreest</rhyme>.</l>
      </lg>
    </lg>
  </text>

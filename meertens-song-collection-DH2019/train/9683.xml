    <melody>Ik arm schaapje aan de heide</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Karel van Mander</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">DE Schrift is alder <rhyme label="a" type="f">weghen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Vol Gheest en Waerheydt <rhyme label="b" type="m">klaer</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">End' is den vleesche <rhyme label="a" type="f" corresp="#s1:l1">teghen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">In sijn opset <rhyme label="b" type="m" corresp="#s1:l2">eenpaer</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">En daer // om heeft de <rhyme label="c" type="f">snoode</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Weereldt verblint, // Sondich <rhyme label="d" type="m">ghesint</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Des Heeren Woordt soo <rhyme label="c" type="f" corresp="#s1:l5">noode</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">De Pharizeen en <rhyme label="a" type="f">hoorden</rhyme></l>
        <l id="s2:l2" met="3" type="-+">T'woordt Christi niet met <rhyme label="b" type="m">vlijt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Maer sochten in sijn <rhyme label="a" type="f" corresp="#s2:l1">woorden</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Hem te vanghen <rhyme label="b" type="m" corresp="#s2:l2">altijt</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Verwijt // en spot sy <rhyme label="c" type="f">dreven</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Om dat hy maer // En strafte <rhyme label="d" type="m">haer</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Goddeloos zondigh <rhyme label="c" type="f" corresp="#s2:l5">leven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Een quam vyerigh <rhyme label="a" type="f">gheloopen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">En viel Christusm te <rhyme label="b" type="m">voet</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Hy hoorde van <rhyme label="a" type="f" corresp="#s3:l1">verkoopen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">En wech gheven sijn <rhyme label="b" type="m" corresp="#s3:l2">goet</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Den moet // is hem <rhyme label="c" type="f">verdwenen</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Den Ionghelinck // Rijck zijnde, <rhyme label="d" type="m">ginck</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Bedroeft wederom <rhyme label="c" type="f" corresp="#s3:l5">henen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">De Gadarenen <rhyme label="a" type="f">baden</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Dat de Heer uyt haer <rhyme label="b" type="m">Landt</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Sou trecken, om dat <rhyme label="a" type="f" corresp="#s4:l1">schaden</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Daer vielen voor de <rhyme label="b" type="m" corresp="#s4:l2">handt</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Ia want // haer Verckens <rhyme label="c" type="f">waren</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Met groot gherucht // in Zee <rhyme label="d" type="m">ghevlucht</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Verdroncken in de <rhyme label="c" type="f" corresp="#s4:l5">baren</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Menigh soude <rhyme label="a" type="f">beminnen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Den Euangely <rhyme label="b" type="m">meer</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Mocht hy daer mede <rhyme label="a" type="f" corresp="#s5:l1">winnen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Schat, rijckdom, goedt of <rhyme label="b" type="m" corresp="#s5:l2">eer</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Maer wanneer // vervolgh of <rhyme label="c" type="f">lijden</rhyme></l>
        <l id="s5:l6" met="4" type="-+">Om 't Woordt opstaet // Om aertsche <rhyme label="d" type="m">baet</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Wijckt menigh af <rhyme label="c" type="f" corresp="#s5:l5">bezijden</rhyme>.</l>
      </lg>
    </lg>
  </text>

      <category translation="religion">godsdienst</category>
    </categories>
  <author>Willem Sluiter</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">GY die des Weerelds <rhyme label="a" type="m">haet</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Onschuldig op u <rhyme label="a" type="m" corresp="#s1:l1">laet</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Gy die betigt werd van het <rhyme label="a" type="m" corresp="#s1:l1">quaed</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Daer gy altijt navolgt het <rhyme label="b" type="m">goed</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Zijt dog getroost en wel <rhyme label="b" type="m" corresp="#s1:l4">gemoed</rhyme>:</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Die vroom is en <rhyme label="a" type="m">oprecht</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Onschuldig ende <rhyme label="a" type="m" corresp="#s2:l1">slecht</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Heeft allen laster weder <rhyme label="a" type="m" corresp="#s2:l1">legt</rhyme>.</l>
        <l id="s2:l4" met="4" type="-+">Een goet geweten zy uw <rhyme label="b" type="m">vreugt</rhyme></l>
        <l id="s2:l5" met="4" type="-+">In 't midden van uw <rhyme label="b" type="m" corresp="#s2:l4">ongeneugt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Laet varen uw <rhyme label="a" type="m">gesucht</rhyme>:</l>
        <l id="s3:l2" met="3" type="-+">d'Oprechte niet en <rhyme label="a" type="m" corresp="#s3:l1">vrucht</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Voor eenig quaet en valsch <rhyme label="a" type="m" corresp="#s3:l1">gerucht</rhyme>:</l>
        <l id="s3:l4" met="4" type="-+">Sijn hert is vast <rhyme label="b" type="m">al-even-seer</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Altijt betrouwend' op den <rhyme label="b" type="m" corresp="#s3:l4">Heer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Sijn hert wel <rhyme label="a" type="m">onderstut</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Door 't Goddelijk <rhyme label="a" type="m" corresp="#s4:l1">beschut</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En sal niet lichtlik zijn <rhyme label="a" type="m" corresp="#s4:l1">bedut</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Door ydle vreese: tot dat <rhyme label="b" type="m">hy</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Sijn lust sie aen sijn <rhyme label="b" type="m" corresp="#s4:l4">weer-party</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Des vromen <rhyme label="a" type="m">trouwigheit</rhyme></l>
        <l id="s5:l2" met="3" type="-+">En sijn <rhyme label="a" type="m" corresp="#s5:l1">gerechtigheit</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Bestaet tot in der <rhyme label="a" type="m" corresp="#s5:l1">eeuwigheit</rhyme>.</l>
        <l id="s5:l4" met="4" type="-+">Sijn naem vergeet men <rhyme label="b" type="m">nimmermeer</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Sijn hoorn sal zijn verhoogt in <rhyme label="b" type="m" corresp="#s5:l4">eer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">De goddeloose <rhyme label="a" type="m">sal</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Aensien dit vreemt <rhyme label="a" type="m" corresp="#s6:l1">geval</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">En braken toorn als bittre <rhyme label="a" type="m" corresp="#s6:l1">gal</rhyme>.</l>
        <l id="s6:l4" met="4" type="-+">Sijn tanden knerssen, en hy <rhyme label="b" type="m">smelt</rhyme>:</l>
        <l id="s6:l5" met="4" type="-+">Als sijnen wensch wert neer <rhyme label="b" type="m" corresp="#s6:l4">gevelt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Vertrouwt maer met <rhyme label="a" type="m">ootmoet</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Steeds op den Heer, en <rhyme label="a" type="m" corresp="#s7:l1">doet</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Volstandelik alleen het <rhyme label="a" type="m" corresp="#s7:l1">goet</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Bewoont de aerd, en voed en <rhyme label="b" type="m">weid</rhyme></l>
        <l id="s7:l5" met="4" type="-+">U altijt met <rhyme label="b" type="m" corresp="#s7:l4">getrouwigheid</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Verlust u in den <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Soo sal hy meer en <rhyme label="a" type="m" corresp="#s8:l1">meer</rhyme></l>
        <l id="s8:l3" met="4" type="-+">U geven uwes herts <rhyme label="a" type="m" corresp="#s8:l1">begeer</rhyme>.</l>
        <l id="s8:l4" met="4" type="-+">Beveelt den Heer al uw <rhyme label="b" type="m">bestel</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Vertrouwt hem hy sal 't maken <rhyme label="b" type="m" corresp="#s8:l4">wel</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">En hy sal zijn <rhyme label="a" type="m">bereit</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Om uw <rhyme label="a" type="m" corresp="#s9:l1">gerechtigheit</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Te doen voortkomen met <rhyme label="a" type="m" corresp="#s9:l1">bescheit</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Gelijk den middag in 't <rhyme label="b" type="m">gesicht</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Uw recht gelijk het heldre <rhyme label="b" type="m" corresp="#s9:l4">licht</rhyme>.</l>
      </lg>
    </lg>
  </text>

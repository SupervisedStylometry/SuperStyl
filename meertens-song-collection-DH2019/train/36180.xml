  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Iesus alderliefsten <rhyme label="a" type="m">mijn</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Hoe cont ghy aldus <rhyme label="a" type="m" corresp="#s1:l1">ghesyn</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Dat ghy my keert u <rhyme label="a" type="m" corresp="#s1:l1">aenschijn</rhyme>!</l>
        <l id="s1:l4" met="4" type="+-">V ghezicht, seer <rhyme label="b" type="m">gesticht</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Is aen my een hemels <rhyme label="b" type="m" corresp="#s1:l4">licht</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Ende ghy nu soo <rhyme label="c" type="m">vry</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Compt dat weeren hier van <rhyme label="c" type="m" corresp="#s1:l6">my</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Waerom syt ghy soo <rhyme label="a" type="m">pieccant</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Waer om op u oogh' u <rhyme label="a" type="m" corresp="#s2:l1">handt</rhyme>?</l>
        <l id="s2:l3" met="4" type="+-">Meynt dat ick u ben <rhyme label="a" type="m" corresp="#s2:l1">vyandt</rhyme>?</l>
        <l id="s2:l4" met="4" type="+-">Meen ick Heer doet my <rhyme label="b" type="m">d'eer</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Set u oogh' op weder <rhyme label="b" type="m" corresp="#s2:l4">keer</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Want hierin is <rhyme label="c" type="m">ghewin</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">In u sien licht uwe <rhyme label="c" type="m" corresp="#s2:l6">min</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Diet' faveur hier mach <rhyme label="a" type="m">gheschien</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Dat hy u ghesicht magh <rhyme label="a" type="m" corresp="#s3:l1">sien</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Acht ick wel gheluckigh <rhyme label="a" type="m" corresp="#s3:l1">d'ien</rhyme>:</l>
        <l id="s3:l4" met="4" type="+-">Want voorwaer, het is <rhyme label="b" type="m">claer</rhyme></l>
        <l id="s3:l5" met="4" type="+-">Ghy syt een bermhertigh <rhyme label="b" type="m" corresp="#s3:l4">Vaer</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">En soo saen, ghy siet <rhyme label="c" type="m">aen</rhyme></l>
        <l id="s3:l7" met="4" type="+-">Vwen toorn is <rhyme label="c" type="m" corresp="#s3:l6">ghedaen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Orlof dan O Jesus <rhyme label="a" type="m">soet</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Dit faveur my oock eens <rhyme label="a" type="m" corresp="#s4:l1">doet</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Aenghesien ick toon' <rhyme label="a" type="m" corresp="#s4:l1">ootmoet</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Gheeft my hier in <rhyme label="b" type="m">quartier</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">U aenschijn vol van <rhyme label="b" type="m" corresp="#s4:l4">plaisier</rhyme>:</l>
        <l id="s4:l6" met="4" type="+-">K'sal hier me wachten <rhyme label="c" type="m">ure</rhyme></l>
        <l id="s4:l7" met="4" type="+-">Die ghy gheeft in't s'werelts <rhyme label="c" type="m" corresp="#s4:l6">ste</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

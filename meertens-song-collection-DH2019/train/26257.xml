  <author>Philips van Marnix van Sint Aldegonde</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">VAn ganscher herten ende <rhyme label="a" type="m">cracht</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Wil ick hoog loven Godes <rhyme label="a" type="m" corresp="#s1:l1">macht</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Ick wil, O Heere, tallen <rhyme label="b" type="f">stonden</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Dijn wonderwercken vry <rhyme label="b" type="f" corresp="#s1:l3">verconden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ick wil alleen, O God, in <rhyme label="a" type="m">dy</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Van herten vrolijck zijn, end <rhyme label="a" type="m" corresp="#s2:l1">bly</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">End dijnen naem voir alle <rhyme label="b" type="f">dingen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">O Allerhoogste, lustig <rhyme label="b" type="f" corresp="#s2:l3">singen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Om dat mijn wederstrijders <rhyme label="a" type="m">fel</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Te rugge sijn gekeert heel <rhyme label="a" type="m" corresp="#s3:l1">snel</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Dijn aengesicht was nauw <rhyme label="b" type="f">verschenen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Sy vielen om, ia sy <rhyme label="b" type="f" corresp="#s3:l3">verdwenen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Du hebst dy mijns genomen <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">End troulijck mijn recht <rhyme label="a" type="m" corresp="#s4:l1">voirgestaen</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Du bist op dijnen Richtstoel <rhyme label="b" type="f">weirdig</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Geseten, Richter seer <rhyme label="b" type="f" corresp="#s4:l3">rechtveirdig</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Du hebst der Heydens straf <rhyme label="a" type="m">gewrocht</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">End tgodloos volck gantz <rhyme label="a" type="m" corresp="#s5:l1">omgebrocht</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Du hebst in eewicheyt te <rhyme label="b" type="f">samen</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Verdelgt end uytgeroeyt haer <rhyme label="b" type="f" corresp="#s5:l3">namen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Is dijn verwoesten nu <rhyme label="a" type="m">voleyndt</rhyme>?</l>
        <l id="s6:l2" met="4" type="-+">Hebstu ons steden al <rhyme label="a" type="m" corresp="#s6:l1">gescheyndt</rhyme>?</l>
        <l id="s6:l3" met="4" type="-+">Seg vyant, sijns om verr' <rhyme label="b" type="f">gesmeten</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Is haer geheugnis heel <rhyme label="b" type="f" corresp="#s6:l3">vergeten</rhyme>?</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Neen, neen, de Heer blijft <rhyme label="a" type="m">eewelijck</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Geseten in sijn <rhyme label="a" type="m" corresp="#s7:l1">Coninckrijck</rhyme>:</l>
        <l id="s7:l3" met="4" type="-+">End hy sal zijnen stoel vast <rhyme label="b" type="f">stichten</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Om alle saecken recht te <rhyme label="b" type="f" corresp="#s7:l3">richten</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Hy sal de weirelt wijt end <rhyme label="a" type="m">breet</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Met recht oirdeelen end <rhyme label="a" type="m" corresp="#s8:l1">bescheit</rhyme>:</l>
        <l id="s8:l3" met="4" type="-+">End over volcken taller <rhyme label="b" type="f">wegen</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Rechtveirdige regiering <rhyme label="b" type="f" corresp="#s8:l3">plegen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">De Heer sal eenen toevlucht <rhyme label="a" type="m">sijn</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Den armen mensch in druck end <rhyme label="a" type="m" corresp="#s9:l1">pijn</rhyme>:</l>
        <l id="s9:l3" met="4" type="-+">Een toevlucht in bequame <rhyme label="b" type="f">tijden</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Wanneer hy steeckt in sware <rhyme label="b" type="f" corresp="#s9:l3">lijden</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Dies heeft een yeglijck die dy <rhyme label="a" type="m">kent</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Tot dywaerts sijne hoip <rhyme label="a" type="m" corresp="#s10:l1">gewent</rhyme>:</l>
        <l id="s10:l3" met="4" type="-+">Want wie dy soeckt, Heer met <rhyme label="b" type="f">volherden</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Sal van dy niet verlaten <rhyme label="b" type="f" corresp="#s10:l3">werden</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Lofsingt den Heer, die eewich <rhyme label="a" type="m">leeft</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">End sijne woin in Sion <rhyme label="a" type="m" corresp="#s11:l1">heeft</rhyme>:</l>
        <l id="s11:l3" met="4" type="-+">Wilt allen volcken ende <rhyme label="b" type="f">scharen</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Sijn wonderwercken <rhyme label="b" type="f" corresp="#s11:l3">openbaren</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Want hy der schaemlen bloet hoog <rhyme label="a" type="m">acht</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">End hout het diep in sijn <rhyme label="a" type="m" corresp="#s12:l1">gedacht</rhyme>:</l>
        <l id="s12:l3" met="4" type="-+">Tgeschrey en can hy niet <rhyme label="b" type="f">vergeten</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Der armen onder tcruys <rhyme label="b" type="f" corresp="#s12:l3">geseten</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Sy my genadig, end <rhyme label="a" type="m">behert</rhyme></l>
        <l id="s13:l2" met="4" type="-+">Mijn lijden, Heer, end sware <rhyme label="a" type="m" corresp="#s13:l1">smert</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">So mijne haters my <rhyme label="b" type="f">verdrucken</rhyme>:</l>
        <l id="s13:l4" met="4" type="-+">End wil my uyt des doots poort <rhyme label="b" type="f" corresp="#s13:l3">rucken</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Op dat ick dijn lof <rhyme label="a" type="m">telckemael</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">In Sions poorten vry <rhyme label="a" type="m" corresp="#s14:l1">verhael</rhyme>:</l>
        <l id="s14:l3" met="4" type="-+">End iuychende my mach <rhyme label="b" type="f">verblijden</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">Om dijn verlossing, uyt mijn <rhyme label="b" type="f" corresp="#s14:l3">lijden</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">De Heydens sijn in hare <rhyme label="a" type="m">gracht</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">Die sy my groeven, self <rhyme label="a" type="m" corresp="#s15:l1">versmacht</rhyme>:</l>
        <l id="s15:l3" met="4" type="-+">Haer voeten sijn int net <rhyme label="b" type="f">gevangen</rhyme>,</l>
        <l id="s15:l4" met="4" type="-+">Dat sy my hadden voir <rhyme label="b" type="f" corresp="#s15:l3">gehangen</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Daer doir wort God de Heer <rhyme label="a" type="m">vernaemt</rhyme>,</l>
        <l id="s16:l2" met="4" type="-+">Dat hy dit oirdeel heeft <rhyme label="a" type="m" corresp="#s16:l1">geraemt</rhyme>.</l>
        <l id="s16:l3" met="4" type="-+">Als dat de godloos (wilt dit <rhyme label="b" type="f">mercken</rhyme>)</l>
        <l id="s16:l4" met="4" type="-+">Verstrickt blijft in sijn eygen <rhyme label="b" type="f" corresp="#s16:l3">wercken</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Het godloos volck boos ende <rhyme label="a" type="m">straf</rhyme>,</l>
        <l id="s17:l2" met="4" type="-+">Sal wijcken eirselings int <rhyme label="a" type="m" corresp="#s17:l1">graf</rhyme>,</l>
        <l id="s17:l3" met="4" type="-+">Met alle, die stout end <rhyme label="b" type="f">vermeten</rhyme>,</l>
        <l id="s17:l4" met="4" type="-+">Des Heeren hoogen naem <rhyme label="b" type="f" corresp="#s17:l3">vergeten</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Want God de Heer den armen <rhyme label="a" type="m">man</rhyme>,</l>
        <l id="s18:l2" met="4" type="-+">Niet eewelijck vergeten <rhyme label="a" type="m" corresp="#s18:l1">kan</rhyme>:</l>
        <l id="s18:l3" met="4" type="-+">Der onderdruckten hoip <rhyme label="b" type="f">lanckmoedig</rhyme>,</l>
        <l id="s18:l4" met="4" type="-+">En sal altoos niet zijn <rhyme label="b" type="f" corresp="#s18:l3">waenspoedig</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">Heer stae dan op, thoon dijn <rhyme label="a" type="m">gewelt</rhyme>,</l>
        <l id="s19:l2" met="4" type="-+">Dat een swack mensch niet houde <rhyme label="a" type="m" corresp="#s19:l1">tvelt</rhyme>:</l>
        <l id="s19:l3" met="4" type="-+">Maer laet de volcken haer <rhyme label="b" type="f">vertoogen</rhyme></l>
        <l id="s19:l4" met="4" type="-+">In het gerichte voir dijn <rhyme label="b" type="f" corresp="#s19:l3">oogen</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">Heer, iaeg hun een verschricktheyt <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s20:l2" met="4" type="-+">Op dat sy leeren recht <rhyme label="a" type="m" corresp="#s20:l1">verstaen</rhyme>,</l>
        <l id="s20:l3" met="4" type="-+">Dat elck van hun niet is met <rhyme label="b" type="f">allen</rhyme>,</l>
        <l id="s20:l4" met="4" type="-+">Dan een swack mensch vol <rhyme label="b" type="f" corresp="#s20:l3">ongevallen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

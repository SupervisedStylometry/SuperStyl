<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>162222</id>
    <date>
      <year-start>1700</year-start>
      <year-end>1700</year-end>
    </date>
    <tags/>
    <melody>Schoon Isabel aanhoor mijn minneklagen</melody>
  <author>Pieter de Vos</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="5" type="-+">Schoon Isabel aenhoort mijn <rhyme label="a" type="f">minneklage</rhyme>,</l>
        <l id="s1:l2" met="5" type="-+">hier leyd de heele fleur van mijn <rhyme label="a" type="f" corresp="#s1:l1">verslagen</rhyme>,</l>
        <l id="s1:l3" met="5" type="-+">ick bid en laed myn togh niet langer <rhyme label="b" type="f">waghten</rhyme></l>
        <l id="s1:l4" met="5" type="-+">of anders moet ick door de Min <rhyme label="b" type="f" corresp="#s1:l3">versmagten</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="5" type="-+">Jonkman het is nogh al te vroegh op <rhyme label="a" type="f">heden</rhyme>,</l>
        <l id="s2:l2" met="5" type="-+">ick kander mijn dienst nogh niet aen u <rhyme label="a" type="f" corresp="#s2:l1">besteeden</rhyme>,</l>
        <l id="s2:l3" met="5" type="-+">daer toe ben ick nogh al te Jonk van <rhyme label="b" type="f">Jaren</rhyme></l>
        <l id="s2:l4" met="5" type="-+">mijn Ouders zouden mijn niet laete <rhyme label="b" type="f" corresp="#s2:l3">paren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="5" type="-+">Schoon Isabel mijn overschoon <rhyme label="a" type="f">goddinne</rhyme>,</l>
        <l id="s3:l2" met="5" type="-+">ick hoop ick sal nogh troost van u <rhyme label="a" type="f" corresp="#s3:l1">verwinne</rhyme>,</l>
        <l id="s3:l3" met="5" type="-+">ghy zijd myn Bruyd mijn engel vol van <rhyme label="b" type="f">waerde</rhyme>,</l>
        <l id="s3:l4" met="5" type="-+">geen schoonder maget vond ik oyt op <rhyme label="b" type="f" corresp="#s3:l3">aerden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="5" type="-+">Jonkman ik zal mijn zoetjens aen gaen <rhyme label="a" type="f">kleeden</rhyme>,</l>
        <l id="s4:l2" met="5" type="-+">en ik zal terstond met u gaen buyte <rhyme label="a" type="f" corresp="#s4:l1">treden</rhyme>,</l>
        <l id="s4:l3" met="5" type="-+">buyten in het Veld onder de groene <rhyme label="b" type="f">Linde</rhyme>,</l>
        <l id="s4:l4" met="5" type="-+">en hooren daer het Nagtegaeltjen <rhyme label="b" type="f" corresp="#s4:l3">zingen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="5" type="-+">Buyten int Veldt daer staet een bos met <rhyme label="a" type="f">bladere</rhyme>,</l>
        <l id="s5:l2" met="5" type="-+">daer loopt een haesje door dat de boompjes <rhyme label="a" type="f" corresp="#s5:l1">davere</rhyme>,</l>
        <l id="s5:l3" met="5" type="-+">Daer soekt soo menig Jager door te <rhyme label="b" type="f">jaegen</rhyme>;</l>
        <l id="s5:l4" met="5" type="-+">'t Js om Vrouw Venus werkie te <rhyme label="b" type="f" corresp="#s5:l3">versaden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="5" type="-+">Schoon Isabel daer na is al mijn <rhyme label="a" type="f">verlangen</rhyme>,</l>
        <l id="s6:l2" met="5" type="-+">ick hoop ick zal dat Wildt gedierd wel <rhyme label="a" type="f" corresp="#s6:l1">vangen</rhyme>,</l>
        <l id="s6:l3" met="5" type="-+">by een Reviertien sonder <rhyme label="b" type="f">minken</rhyme>,</l>
        <l id="s6:l4" met="5" type="-+">daer Cupidootien traght eens uyt te <rhyme label="b" type="f" corresp="#s6:l3">drincken</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="5" type="-+">Jonkvrou ick zal mijn voor u neder <rhyme label="a" type="f">buygen</rhyme>,</l>
        <l id="s7:l2" met="5" type="-+">schenke mijn Trouw den Hemel zal 't <rhyme label="a" type="f" corresp="#s7:l1">getuygen</rhyme>,</l>
        <l id="s7:l3" met="5" type="-+">ik zal u nimmermeer dog niet <rhyme label="b" type="f">verlaten</rhyme>,</l>
        <l id="s7:l4" met="5" type="-+">al zouden wij zamen doolen agter <rhyme label="b" type="f" corresp="#s7:l3">straten</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="5" type="-+">Jonkman ik legh hier neder voor u <rhyme label="a" type="f">voeten</rhyme>,</l>
        <l id="s8:l2" met="5" type="-+">ghy kunt uw geylen Min nu aan mijn <rhyme label="a" type="f" corresp="#s8:l1">boeten</rhyme>,</l>
        <l id="s8:l3" met="5" type="-+">ik heb u bemindt eylaes tot geender <rhyme label="b" type="f">schanden</rhyme>,</l>
        <l id="s8:l4" met="5" type="-+">kom toond Vrouw Venus kint u <rhyme label="b" type="f" corresp="#s8:l3">offerhanden</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="5" type="-+">Als hy zijn wille hadt van den Maghet <rhyme label="a" type="f">braven</rhyme>,</l>
        <l id="s9:l2" met="5" type="-+">die langhen tydt lagh in zijn herdt <rhyme label="a" type="f" corresp="#s9:l1">begraven</rhyme>,</l>
        <l id="s9:l3" met="5" type="-+">doen nam hy Oorlog en hy ging <rhyme label="b" type="f">vaeren</rhyme>,</l>
        <l id="s9:l4" met="5" type="-+">al naer Oostindien toe voor seven <rhyme label="b" type="f" corresp="#s9:l3">Jaeren</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="5" type="-+">O Hemel wie zal ik myn noodt gaen <rhyme label="a" type="f">klagen</rhyme></l>
        <l id="s10:l2" met="5" type="-+">daer leyd de heele fleur van mijn <rhyme label="a" type="f" corresp="#s10:l1">verslagen</rhyme>,</l>
        <l id="s10:l3" met="5" type="-+">myn Lief is weg getrocken uyt de <rhyme label="b" type="f">Landen</rhyme>,</l>
        <l id="s10:l4" met="5" type="-+">en ik blijf met myn kleyne kind in <rhyme label="b" type="f" corresp="#s10:l3">schanden</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="5" type="-+">Oorlof Doghters en Maeghden te <rhyme label="a" type="f">gaeren</rhyme>,</l>
        <l id="s11:l2" met="5" type="-+">hebt ghy een Lief zoo wilter mee gaen <rhyme label="a" type="f" corresp="#s11:l1">paeren</rhyme>,</l>
        <l id="s11:l3" met="5" type="-+">eer dat zy gaen en trecken uyt den <rhyme label="b" type="f">Landen</rhyme>,</l>
        <l id="s11:l4" met="5" type="-+">zo raekt u ionge fleur in geender <rhyme label="b" type="f" corresp="#s11:l3">schande</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

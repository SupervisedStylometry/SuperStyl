    <tags/>
    <melody>Windje daar het bos af drilt</melody>
  <author>Femme Gerbrantsz Drieduym</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">WAt heb ick menigh droeve <rhyme label="a" type="m">traen</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Suure tochten <rhyme label="a" type="m" corresp="#s1:l1">uyt-gestaen</rhyme>?</l>
        <l id="s1:l3" met="2" type="+-">Maer nae <rhyme label="b" type="f">lijden</rhyme></l>
        <l id="s1:l4" met="2" type="+-">Komt <rhyme label="b" type="f" corresp="#s1:l3">verblijden</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Nae het suur komt nu het <rhyme label="c" type="m">soet</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Dat Ziel en Lijf verheugen <rhyme label="c" type="m" corresp="#s1:l5">moet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">God heeft mijn Lichaem uyt het <rhyme label="a" type="m">stof</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Op-geweckt tot sijnen <rhyme label="a" type="m" corresp="#s2:l1">lof</rhyme>,</l>
        <l id="s2:l3" met="2" type="+-">
          <rhyme label="b" type="f">Ongeschonden</rhyme>
        </l>
        <l id="s2:l4" met="2" type="+-">Vry van <rhyme label="b" type="f" corresp="#s2:l3">sonden</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Vlugh en veerdigh over <rhyme label="c" type="m">al</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Dat eeuwighlijck soo blijven <rhyme label="c" type="m" corresp="#s2:l5">sal</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Nu is de vreughde gantsch <rhyme label="a" type="m">volmaeckt</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Godt, die voor de sijne <rhyme label="a" type="m" corresp="#s3:l1">waeckt</rhyme>,</l>
        <l id="s3:l3" met="2" type="+-">Heeft mijn <rhyme label="b" type="f">leden</rhyme>,</l>
        <l id="s3:l4" met="2" type="+-">Die <rhyme label="b" type="f" corresp="#s3:l3">beneden</rhyme></l>
        <l id="s3:l5" met="4" type="+-">Sijn vergaen, oock het <rhyme label="c" type="m">gebeent</rhyme></l>
        <l id="s3:l6" met="4" type="-+">met mijne ziel nu weer <rhyme label="c" type="m" corresp="#s3:l5">ver-eent</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">O! Heyligh, heyligh, heyligh <rhyme label="a" type="m">Heer</rhyme>!</l>
        <l id="s4:l2" met="4" type="+-">U sy alle prijs en <rhyme label="a" type="m" corresp="#s4:l1">eer</rhyme>,</l>
        <l id="s4:l3" met="2" type="+-">Dat u <rhyme label="b" type="f">Name</rhyme></l>
        <l id="s4:l4" met="2" type="+-">Van ons <rhyme label="b" type="f" corresp="#s4:l3">t'same</rhyme></l>
        <l id="s4:l5" met="4" type="+-">Werde lof en danck <rhyme label="c" type="m">geseyt</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Van nu tot in der <rhyme label="c" type="m" corresp="#s4:l5">eeuwigheyt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Hoe heerlick is ons erf en <rhyme label="a" type="m">lodt</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Dus te woonen by ons <rhyme label="a" type="m" corresp="#s5:l1">Godt</rhyme>,</l>
        <l id="s5:l3" met="2" type="+-">Sonder <rhyme label="b" type="f">lijden</rhyme>,</l>
        <l id="s5:l4" met="2" type="+-">Of <rhyme label="b" type="f" corresp="#s5:l3">benijden</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Vol van vreught, en vry van <rhyme label="c" type="m">pijn</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Waer van oock noyt een eynd sal <rhyme label="c" type="m" corresp="#s5:l5">zijn</rhyme>!</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Hier hoeft geen Son noch <rhyme label="a" type="m">Mane-licht</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">'t Heyligh Lam geeft ons <rhyme label="a" type="m" corresp="#s6:l1">gesicht</rhyme>,</l>
        <l id="s6:l3" met="2" type="+-">Ster noch <rhyme label="b" type="f">stralen</rhyme></l>
        <l id="s6:l4" met="2" type="+-">Hier niet <rhyme label="b" type="f" corresp="#s6:l3">dwalen</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Iaer noch Maent men hier oyt <rhyme label="c" type="m">sach</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Hier achtmen duysent Iaer een <rhyme label="c" type="m" corresp="#s6:l5">Dagh</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Hier vreest men Vyand noch <rhyme label="a" type="m">verdriet</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Al dat gespuys en komt hier <rhyme label="a" type="m" corresp="#s7:l1">niet</rhyme>:</l>
        <l id="s7:l3" met="2" type="+-">Wie kan <rhyme label="b" type="f">seggen</rhyme>,</l>
        <l id="s7:l4" met="2" type="+-">En uyt <rhyme label="b" type="f" corresp="#s7:l3">leggen</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Het vermaeck van desen <rhyme label="c" type="m">staet</rhyme>?</l>
        <l id="s7:l6" met="4" type="-+">Dat ons al verr' te boven <rhyme label="c" type="m" corresp="#s7:l5">gaet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Geen ooge schout dees' vreughd recht <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">En geen oor kan die <rhyme label="a" type="m" corresp="#s8:l1">verstaen</rhyme>,</l>
        <l id="s8:l3" met="2" type="+-">Ons' <rhyme label="b" type="f">gedachten</rhyme></l>
        <l id="s8:l4" met="2" type="+-">'t Niet en <rhyme label="b" type="f" corresp="#s8:l3">achten</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Wat een staet en <rhyme label="c" type="m">heerlijckheyt</rhyme></l>
        <l id="s8:l6" met="4" type="-+">Godt voor sijn Kind'ren heeft <rhyme label="c" type="m" corresp="#s8:l5">bereyt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Och! hadden zy, die hier <rhyme label="a" type="m">beneen</rhyme></l>
        <l id="s9:l2" met="4" type="+-">Leggen knerssen met <rhyme label="a" type="m" corresp="#s9:l1">geween</rhyme></l>
        <l id="s9:l3" met="2" type="+-">Op haer <rhyme label="b" type="f">tanden</rhyme>,</l>
        <l id="s9:l4" met="2" type="+-">'t Harer <rhyme label="b" type="f" corresp="#s9:l3">schanden</rhyme>,</l>
        <l id="s9:l5" met="4" type="+-">'t Leven beter <rhyme label="c" type="m">aen-gestelt</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Dan wierden sy soo niet <rhyme label="c" type="m" corresp="#s9:l5">gequelt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

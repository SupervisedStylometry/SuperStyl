  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">NU laet ons Christum loven <rhyme label="a" type="m">fijn</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">En met een ander vrolijck <rhyme label="a" type="m" corresp="#s1:l1">zijn</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Die Tyran is met synen <rhyme label="b" type="m">Heer</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Verdroncken inden rooden <rhyme label="b" type="m" corresp="#s1:l3">Meer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wy stonden al in grooter <rhyme label="a" type="m">vaer</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Doen hy ons woud' verdelghen <rhyme label="a" type="m" corresp="#s2:l1">gaer</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Doen holp ons Christus onse <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">En voerden ons door t'Roode <rhyme label="b" type="m" corresp="#s2:l3">Meer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Dat Lam met synen Bloet en <rhyme label="a" type="m">doot</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Halp ons haest uyter grooten <rhyme label="a" type="m" corresp="#s3:l1">noot</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Doen voor ons street die Heere <rhyme label="b" type="m">Christ</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Dies d'Vyandt boos verdroncken <rhyme label="b" type="m" corresp="#s3:l3">is</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Dit is dat rechte <rhyme label="a" type="m">Paeschelam</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Ghebraden aen des Cruyces <rhyme label="a" type="m" corresp="#s4:l1">stam</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Daer van nutlijck te eten <rhyme label="b" type="m">is</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Dat is die lief Heer Jesus <rhyme label="b" type="m" corresp="#s4:l3">Christ</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Dit is dat rechte <rhyme label="a" type="m">Soete-broot</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">D'welck van ons drijft den eew'gen <rhyme label="a" type="m" corresp="#s5:l1">doot</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Des Lams bloet wy drincken daer <rhyme label="b" type="m">by</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">So zijn wy door den Tyran <rhyme label="b" type="m" corresp="#s5:l3">vry</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ach lieve Godt, hoe connen <rhyme label="a" type="m">wy</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Voor sulcken Offer dancken <rhyme label="a" type="m" corresp="#s6:l1">dy</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Daer door wy van die <rhyme label="b" type="m">Tyranny</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Verlost zijn, en geworden <rhyme label="b" type="m" corresp="#s6:l3">vry</rhyme>,</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Ghy Lam zijt aller eeren <rhyme label="a" type="m">weert</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Dies men dy billick roemt end' <rhyme label="a" type="m" corresp="#s7:l1">eert</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Dy seydt die gantsche <rhyme label="b" type="m">Christenheyt</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Lof, Eer en Danck in <rhyme label="b" type="m" corresp="#s7:l3">eewicheyt</rhyme>.</l>
      </lg>
    </lg>
  </text>

    <tags/>
    <melody>O Gott wir danken deiner Güt</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Den Vader heeft den Sone <rhyme label="a" type="m">lief</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">En al die hem <rhyme label="b" type="f">aencleven</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Die heeft hy t’saem tot zijn <rhyme label="a" type="m" corresp="#s1:l1">gerief</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">In syne handt <rhyme label="b" type="f" corresp="#s1:l2">ghegeven</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Den Sone weyt sijn schaepkens <rhyme label="c" type="m">soet</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Hy gaet voor haer als herder <rhyme label="c" type="m" corresp="#s1:l5">goet</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">En brenghts’ int eeuwich <rhyme label="b" type="f" corresp="#s1:l2">leven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Geen lyden groot is hem te <rhyme label="a" type="m">swaer</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Om zijn schaepkens te <rhyme label="b" type="f">weyden</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Sy syn in hem en hy in <rhyme label="a" type="m" corresp="#s2:l1">haer</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Niemant en machse <rhyme label="b" type="f" corresp="#s2:l2">scheyden</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">De liefde soet is haer <rhyme label="c" type="m">banier</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Dit onverwinnelicke <rhyme label="c" type="m" corresp="#s2:l5">vier</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Is d’eeuwigheyt van <rhyme label="b" type="f" corresp="#s2:l2">beyden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Die dese liefd’ in hem <rhyme label="a" type="m">ontfanght</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Ghevoelt een diepe <rhyme label="b" type="f">wonde</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Een smerte die het hert <rhyme label="a" type="m" corresp="#s3:l1">vervanght</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En drucket gansch te <rhyme label="b" type="f" corresp="#s3:l2">gronde</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">En hier van is de <rhyme label="c" type="m">Medecijn</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Alleen Godts lieffelick <rhyme label="c" type="m" corresp="#s3:l5">aenschijn</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Den kus van zijnen <rhyme label="b" type="f" corresp="#s3:l2">monde</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Maer buyten dit en isser <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Dat de ziel can <rhyme label="b" type="f">vermaken</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En geen vertroostingh haer <rhyme label="a" type="m" corresp="#s4:l1">geschiet</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Door menschelucke <rhyme label="b" type="f" corresp="#s4:l2">saken</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Hoe schoon gevleyt, hoe wijs <rhyme label="c" type="m">beleyt</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">’t Is al vergeefschen <rhyme label="c" type="m" corresp="#s4:l5">arrebeydt</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Kan sy Gods liefd’ niet <rhyme label="b" type="f" corresp="#s4:l2">smaken</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Maer een druppel ghenoten <rhyme label="a" type="m">van</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Die levende <rhyme label="b" type="f">fonteyne</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">’t Gewonde hert ghenesen <rhyme label="a" type="m" corresp="#s5:l1">can</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Want hier uyt vloeyt <rhyme label="b" type="f" corresp="#s5:l2">alleyne</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">De volheyt die de siele <rhyme label="c" type="m">voet</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">En maeckt dat bitter water <rhyme label="c" type="m" corresp="#s5:l5">soet</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Al door de liefde <rhyme label="b" type="f" corresp="#s5:l2">reyne</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ghelijck den Vader heeft <rhyme label="a" type="m">bemint</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Den Soon van hem <rhyme label="b" type="f">gheboren</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Alsoo is oock den Soon <rhyme label="a" type="m" corresp="#s6:l1">ghesint</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Tot zijn Bruyt <rhyme label="b" type="f" corresp="#s6:l2">uytvercoren</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Te geven haer zijn <rhyme label="c" type="m">heerlickheyt</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Die hem den Vader heeft <rhyme label="c" type="m" corresp="#s6:l5">bereyt</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Van eeuwicheydt te <rhyme label="b" type="f" corresp="#s6:l2">voren</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Te voren eer des wereldts <rhyme label="a" type="m">grondt</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Gheleyt was van <rhyme label="b" type="f">beginne</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Den Soon in ‘s Vaders liefde <rhyme label="a" type="m" corresp="#s7:l1">stont</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Want eeuwich is Godts <rhyme label="b" type="f" corresp="#s7:l2">minne</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Door geen toeval wort sy <rhyme label="c" type="m">bevleckt</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">De ziele die sy tot haer <rhyme label="c" type="m" corresp="#s7:l5">treckt</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Wort oock van desen <rhyme label="b" type="f" corresp="#s7:l2">sinne</rhyme>,</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">In dese eenheyt sy <rhyme label="a" type="m">verdwijnt</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">En rust aldaer <rhyme label="b" type="f">verborghen</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Al ist dat sy uytsinnich <rhyme label="a" type="m" corresp="#s8:l1">schijnt</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Daer is niet min te <rhyme label="b" type="f" corresp="#s8:l2">sorghen</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Gelijck de Son aen s’Hemels <rhyme label="c" type="m">throon</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Haer schijnsel altijt even <rhyme label="c" type="m" corresp="#s8:l5">schoon</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Vernieut sy alle <rhyme label="b" type="f" corresp="#s8:l2">morghen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Rust, vreed’ en vreucht dat is haer <rhyme label="a" type="m">deel</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">En een vrolick <rhyme label="b" type="f">ghenoegen</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Want door de liefd’ can sy <rhyme label="a" type="m" corresp="#s9:l1">gheheel</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Tot alle dingh haer <rhyme label="b" type="f" corresp="#s9:l2">voegen</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Maer die van herten blijft <rhyme label="c" type="m">versteent</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">En in de liefde niet <rhyme label="c" type="m" corresp="#s9:l5">vereent</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Die heeft altijt een <rhyme label="b" type="f" corresp="#s9:l2">wroeghen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

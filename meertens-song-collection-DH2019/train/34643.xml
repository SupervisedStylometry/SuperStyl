  <author>Guilelmus van der Borcht</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">LEst als het <rhyme label="a" type="m">Bacchus-nat</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Mijn hooft hadd' <rhyme label="a" type="m" corresp="#s1:l1">in-ghevat</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Doen viel ick in het <rhyme label="b" type="f">droomen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Als Luna glat en <rhyme label="c" type="m">rondt</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Hadd' op ons <rhyme label="c" type="m" corresp="#s1:l4">horizont</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Haer broeders plaets' <rhyme label="b" type="f" corresp="#s1:l3">ghenomen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ick vondt my aen een <rhyme label="a" type="m">rey</rhyme></l>
        <l id="s2:l2" met="3" type="-+">In 't midden van een <rhyme label="a" type="m" corresp="#s2:l1">wey</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Met lieve Nymphkens <rhyme label="b" type="f">spelen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Waer dat wy keer op <rhyme label="c" type="m">keer</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Ons' adem meer en <rhyme label="c" type="m" corresp="#s2:l4">meer</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Op hunne lipkens <rhyme label="b" type="f" corresp="#s2:l3">telen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Maer na dat ick we'er <rhyme label="a" type="m">zwamp</rhyme></l>
        <l id="s3:l2" met="3" type="-+">In 't over-tolligh <rhyme label="a" type="m" corresp="#s3:l1">damp</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Van Baccus rijcke <rhyme label="b" type="f">gaven</rhyme></l>
        <l id="s3:l4" met="3" type="-+">(Want soo plagh ick in 't <rhyme label="c" type="m">groen</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Op ieder dagh te <rhyme label="c" type="m" corresp="#s3:l4">doen</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Om 't leven af te <rhyme label="b" type="f" corresp="#s3:l3">draven</rhyme>.)</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Docht my ick hadd' met <rhyme label="a" type="m">lust</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Een poes'le meyt <rhyme label="a" type="m" corresp="#s4:l1">ghekust</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Die met haer purp re <rhyme label="b" type="f">lipkens</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Op mijnen moeden <rhyme label="c" type="m">mondt</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Hadd' menigh-mael <rhyme label="c" type="m" corresp="#s4:l4">ghejont</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Wel duysent sachte <rhyme label="b" type="f" corresp="#s4:l3">stipkens</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Maer laes ! ick hoord' een <rhyme label="a" type="m">woort</rhyme></l>
        <l id="s5:l2" met="3" type="-+">'t Ghen' luyd': komt vlijtigh <rhyme label="a" type="m" corresp="#s5:l1">voort</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Naer Charons schuyte <rhyme label="b" type="f">henen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">En eer ick quam aen <rhyme label="c" type="m">boordt</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Mijn droomken was <rhyme label="c" type="m" corresp="#s5:l4">verstoort</rhyme></l>
        <l id="s5:l6" met="3" type="-+">En alles oock <rhyme label="b" type="f" corresp="#s5:l3">verdwenen</rhyme>.</l>
      </lg>
    </lg>
  </text>

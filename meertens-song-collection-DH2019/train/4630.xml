  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">G’En zult geen Beelde <rhyme label="a" type="f">Snijden</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Maer, vrind! wat staetter <rhyme label="b" type="m">by</rhyme>?</l>
        <l id="s1:l3" met="3" type="-+">Om daer aen t’geen-der <rhyme label="a" type="f" corresp="#s1:l1">tijden</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Te doen <rhyme label="b" type="m" corresp="#s1:l2">afgoderij</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Want dit’s maer een <rhyme label="c" type="m">gedeelt</rhyme>’</l>
        <l id="s1:l6" met="3" type="-+">Van ’t eerste tien <rhyme label="d" type="m">gebod</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Hoe zeer het ook <rhyme label="c" type="m" corresp="#s1:l5">verveelt</rhyme></l>
        <l id="s1:l8" met="3" type="-+">’t Gere-for-meerde <rhyme label="d" type="m" corresp="#s1:l6">rot</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Dus las den ouden <rhyme label="a" type="f">Tempel</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Van ’t Christelijk <rhyme label="b" type="m">gezin</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">z’ Ook noch by ’t oud <rhyme label="a" type="f" corresp="#s2:l1">exempel</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Van Augustinus <rhyme label="b" type="m" corresp="#s2:l2">vin</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">En waert ook anders, <rhyme label="c" type="m">hoe</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Zou de Geneefse <rhyme label="d" type="m">Kerk</rhyme></l>
        <l id="s2:l7" met="3" type="-+">De schilders laten <rhyme label="c" type="m" corresp="#s2:l5">toe</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Met al ’t gesnede <rhyme label="d" type="m" corresp="#s2:l6">werk</rhyme>?</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">De deze mosten <rhyme label="a" type="f">ruimen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Voor al, of immers <rhyme label="b" type="m">niet</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Van brokken of van <rhyme label="a" type="f" corresp="#s3:l1">kruimen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Mee deylen, zoo met <rhyme label="b" type="m" corresp="#s3:l2">ziet</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Bekendt dan vry, dat <rhyme label="c" type="m">God</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Noit beeld of <rhyme label="d" type="m">schildery</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Bekeurdt heeft, door <rhyme label="c" type="m" corresp="#s3:l5">verbod</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Als om <rhyme label="d" type="m" corresp="#s3:l6">d’Afgodery</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">’t Blijkt aende <rhyme label="a" type="f">Cherubinnen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En aen ’t metael <rhyme label="b" type="m">Serpent</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">En aen d’ossen die wy <rhyme label="a" type="f" corresp="#s4:l1">vinnen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Gesne’en in Godes <rhyme label="b" type="m" corresp="#s4:l2">tend</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Iae lett’ren, dagen, <rhyme label="c" type="m">aerd</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">(Nae God ons tuigen <rhyme label="d" type="m">liet</rhyme>)</l>
        <l id="s4:l7" met="3" type="-+">Zijn wel eerbieding <rhyme label="c" type="m" corresp="#s4:l5">waerd</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Waerom dan beelden <rhyme label="d" type="m" corresp="#s4:l6">niet</rhyme>?</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">De all’ gemeyne <rhyme label="a" type="f">raden</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">En harders vande <rhyme label="b" type="m">Kerk</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Lief hebbers vroug en <rhyme label="a" type="f" corresp="#s5:l1">spade</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Van Godes kroon; <rhyme label="b" type="m" corresp="#s5:l2">bemerk</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Ik ook altijd <rhyme label="c" type="m">geweest</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Te zijn van dit <rhyme label="d" type="m">gevoel</rhyme>.</l>
        <l id="s5:l7" met="3" type="-+">Gaet buigt uw’ wrangen <rhyme label="c" type="m" corresp="#s5:l5">geest</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Dan onder Petrus <rhyme label="d" type="m" corresp="#s5:l6">stoel</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">En vreesdy noch te <rhyme label="a" type="f">missen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Met d’algemeyne <rhyme label="b" type="m">Kerk</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Zoo laet u de <rhyme label="a" type="f" corresp="#s6:l1">Hemorrisse</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Verstarken met haer <rhyme label="b" type="m" corresp="#s6:l2">werk</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">‘k Zeg mettet beeld, daer <rhyme label="c" type="m">zy</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Den Heer mee had <rhyme label="d" type="m">vergoed</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Het weldaed, ’t welk haer <rhyme label="c" type="m" corresp="#s6:l5">vry</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Gemaekt had van haer <rhyme label="d" type="m" corresp="#s6:l6">bloed</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">End’ op dat hier niet <rhyme label="a" type="f">tegen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Te zeggen vallen <rhyme label="b" type="m">zou</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Betuigde Godes <rhyme label="a" type="f" corresp="#s7:l1">zegen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">D’eerbieding vande <rhyme label="b" type="m" corresp="#s7:l2">vrou</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Door een heilsamig <rhyme label="c" type="m">gras</rhyme></l>
        <l id="s7:l6" met="3" type="-+">’t Welk rakende den <rhyme label="d" type="m">zoom</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Des kleeds, zoo dik, zoo <rhyme label="c" type="m" corresp="#s7:l5">ras</rhyme></l>
        <l id="s7:l8" met="3" type="-+">De kranken maekte <rhyme label="d" type="m" corresp="#s7:l6">vroom</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">En ist dat deze <rhyme label="a" type="f">reden</rhyme></l>
        <l id="s8:l2" met="3" type="-+">U niet genoug en <rhyme label="b" type="m">sijn</rhyme>;</l>
        <l id="s8:l3" met="3" type="-+">Zoo heugt ’t geen wijlen <rhyme label="a" type="f" corresp="#s8:l1">dede</rhyme></l>
        <l id="s8:l4" met="3" type="-+">De Keyser <rhyme label="b" type="m" corresp="#s8:l2">Constantijn</rhyme></l>
        <l id="s8:l5" met="3" type="-+">In d’eerst Christen <rhyme label="c" type="m">Kerk</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Door Paus Silvesters <rhyme label="d" type="m">last</rhyme>;</l>
        <l id="s8:l7" met="3" type="-+">En ziet hoe nu uw’ <rhyme label="c" type="m" corresp="#s8:l5">werk</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Op d’ouden Tempel <rhyme label="d" type="m" corresp="#s8:l6">past</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Hy liet Heer Iesus <rhyme label="a" type="f">stellen</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Een beeld van louter <rhyme label="b" type="m">goud</rhyme>:</l>
        <l id="s9:l3" met="3" type="-+">Zijn tweemael zes <rhyme label="a" type="f" corresp="#s9:l1">gezellen</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Van zilver, rijk <rhyme label="b" type="m" corresp="#s9:l2">geboudt</rhyme>:</l>
        <l id="s9:l5" met="3" type="-+">De  rest was <rhyme label="c" type="m">naevenant</rhyme>.</l>
        <l id="s9:l6" met="3" type="-+">Volgt dan op deze <rhyme label="d" type="m">paen</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Op dat gh’u niet en <rhyme label="c" type="m" corresp="#s9:l5">brand</rhyme></l>
        <l id="s9:l8" met="3" type="-+">Met Keyser <rhyme label="d" type="m" corresp="#s9:l6">Iuliaen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

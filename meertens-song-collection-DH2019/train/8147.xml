  <author>Jan Jansz. Deutel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">KRanckheyt had <rhyme label="a" type="f">bevanghen</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Lasarus van <rhyme label="b" type="m">Bethania</rhyme>,</l>
        <l id="s1:l3" met="3" type="+-">Iesus nam zijn <rhyme label="a" type="f" corresp="#s1:l1">ganghen</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Na 't Casteel van <rhyme label="b" type="m" corresp="#s1:l2">Maria</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Die met haer Suster <rhyme label="b" type="m" corresp="#s1:l2">Martha</rhyme></l>
        <l id="s1:l6" met="4" type="+-">groot verlangh hadden daer <rhyme label="b" type="m" corresp="#s1:l2">na</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Martha gans <rhyme label="a" type="f">versleghen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Vol van tranen en <rhyme label="b" type="m">droefheydt</rhyme>,</l>
        <l id="s2:l3" met="3" type="+-">Liep den Heere <rhyme label="a" type="f" corresp="#s2:l1">teghen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">De Geneser van haer <rhyme label="b" type="m" corresp="#s2:l2">leydt</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Had haer al te langh <rhyme label="b" type="m" corresp="#s2:l2">ghebeydt</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Klaecht sy hem met <rhyme label="b" type="m" corresp="#s2:l2">treurigheydt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Ons broeder, o <rhyme label="a" type="f">Heere</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Die u soo lief was en <rhyme label="b" type="m">waerdt</rhyme>,</l>
        <l id="s3:l3" met="3" type="+-">Hy en leeft niet <rhyme label="a" type="f" corresp="#s3:l1">meere</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Ach! hy leydt al inde <rhyme label="b" type="m" corresp="#s3:l2">aerdt</rhyme>:</l>
        <l id="s3:l5" met="4" type="+-">Hadt ghy u wat eer <rhyme label="b" type="m" corresp="#s3:l2">verklaert</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Hier voor hadt ghy ons <rhyme label="b" type="m" corresp="#s3:l2">bewaert</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">Doch o Heer, ick weet <rhyme label="a" type="f">wat</rhyme></l>
        <l id="s4:l2" met="4" type="+-">'t Ghene wat ghy van Godt <rhyme label="b" type="m">bidt</rhyme>,</l>
        <l id="s4:l3" met="3" type="+-">Dat hy u dan gheeft <rhyme label="a" type="f" corresp="#s4:l1">dat</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Soo wil ick verwachten <rhyme label="b" type="m" corresp="#s4:l2">dit</rhyme></l>
        <l id="s4:l5" met="4" type="+-">Of weer leven mocht u <rhyme label="b" type="m" corresp="#s4:l2">lidt</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Door diens cracht die hooghe <rhyme label="b" type="m" corresp="#s4:l2">sit</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="+-">Iesus die men moet <rhyme label="a" type="f">prijsen</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Sprack tot Martha: hoort na <rhyme label="b" type="m">mijn</rhyme></l>
        <l id="s5:l3" met="3" type="+-">V broeder sal <rhyme label="a" type="f" corresp="#s5:l1">verrijsen</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Laet u dit verlichten <rhyme label="b" type="m" corresp="#s5:l2">fijn</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Want ick wil u trooster <rhyme label="b" type="m" corresp="#s5:l2">zijn</rhyme></l>
        <l id="s5:l6" met="4" type="+-">In u druck en u <rhyme label="b" type="m" corresp="#s5:l2">ghepijn</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="+-">Ick weet sprack Martha <rhyme label="a" type="f">klare</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">'t Sal met hem als met ons <rhyme label="b" type="m">gaen</rhyme>,</l>
        <l id="s6:l3" met="3" type="+-">Alsmen <rhyme label="a" type="f" corresp="#s6:l1">allegare</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Moet verrijsen en op <rhyme label="b" type="m" corresp="#s6:l2">staen</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Als den grooten dagh comt <rhyme label="b" type="m" corresp="#s6:l2">aen</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Die niemandt voorby magh <rhyme label="b" type="m" corresp="#s6:l2">gaen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="+-">Ick segh, Marthe, <rhyme label="a" type="f">ghewisse</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Dat ick ben, weest niet <rhyme label="b" type="m">verdooft</rhyme>,</l>
        <l id="s7:l3" met="3" type="+-">De <rhyme label="a" type="f" corresp="#s7:l1">verrijsenisse</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Oock dat leven, wiet <rhyme label="b" type="m" corresp="#s7:l2">ghelooft</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Die sal leven hooft voor <rhyme label="b" type="m" corresp="#s7:l2">hooft</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Al waert leven hem <rhyme label="b" type="m" corresp="#s7:l2">berooft</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="+-">En wie leeft â€™t is <rhyme label="a" type="f">waerheydt</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Spreeckt de Heer, met soet <rhyme label="b" type="m">gheschal</rhyme>,</l>
        <l id="s8:l3" met="3" type="+-">Die en heeft gheen <rhyme label="a" type="f" corresp="#s8:l1">swaerheyt</rhyme></l>
        <l id="s8:l4" met="4" type="+-">Vande doodt die komen <rhyme label="b" type="m" corresp="#s8:l2">sal</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Want 'tgheloof bevrijtse <rhyme label="b" type="m" corresp="#s8:l2">al</rhyme></l>
        <l id="s8:l6" met="4" type="+-">Voor den eeuwighen <rhyme label="b" type="m" corresp="#s8:l2">misval</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="+-">Salich is die <rhyme label="a" type="f">naeme</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Soo ons de schriftuer <rhyme label="b" type="m">ontbindt</rhyme>,</l>
        <l id="s9:l3" met="3" type="+-">Ia heylich <rhyme label="a" type="f" corresp="#s9:l1">bequame</rhyme></l>
        <l id="s9:l4" met="4" type="+-">Die in d'eerst een deele <rhyme label="b" type="m" corresp="#s9:l2">vindt</rhyme></l>
        <l id="s9:l5" met="4" type="+-">Van 't verrijsen, sal gheen <rhyme label="b" type="m" corresp="#s9:l2">noot</rhyme></l>
        <l id="s9:l6" met="4" type="+-">Hebben vande tweede <rhyme label="b" type="m" corresp="#s9:l2">doodt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="+-">Wilt nu al <rhyme label="a" type="f">ontwaecken</rhyme>,</l>
        <l id="s10:l2" met="4" type="+-">Die daer slaepen inden <rhyme label="b" type="m">doodt</rhyme></l>
        <l id="s10:l3" met="3" type="+-">En naet leven <rhyme label="a" type="f" corresp="#s10:l1">haecken</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">Neycht hem d'ooren die u <rhyme label="b" type="m" corresp="#s10:l2">noodt</rhyme></l>
        <l id="s10:l5" met="4" type="+-">Wt het graf der sonden <rhyme label="b" type="m" corresp="#s10:l2">snoodt</rhyme>.</l>
        <l id="s10:l6" met="4" type="+-">Ia wat is dees liefde <rhyme label="b" type="m" corresp="#s10:l2">groot</rhyme>?</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="+-">'t Licht is op <rhyme label="a" type="f">gesteecken</rhyme>,</l>
        <l id="s11:l2" met="4" type="+-">Lieve menschen, over <rhyme label="b" type="m">al</rhyme>,</l>
        <l id="s11:l3" met="3" type="+-">Wilt terstondt <rhyme label="a" type="f" corresp="#s11:l1">opbreecken</rhyme>,</l>
        <l id="s11:l4" met="4" type="+-">En beweent der sonden <rhyme label="b" type="m" corresp="#s11:l2">val</rhyme>,</l>
        <l id="s11:l5" met="4" type="+-">Dees Fonteyne is soo <rhyme label="b" type="m" corresp="#s11:l2">soet</rhyme></l>
        <l id="s11:l6" met="4" type="+-">Die ons suyver wasschen <rhyme label="b" type="m" corresp="#s11:l2">doet</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="+-">Om Godts Soon te <rhyme label="a" type="f">eeren</rhyme></l>
        <l id="s12:l2" met="4" type="+-">Is 't miraeckel <rhyme label="b" type="m">uytgebreyt</rhyme>,</l>
        <l id="s12:l3" met="3" type="+-">Wilt zijn lof <rhyme label="a" type="f" corresp="#s12:l1">vermeeren</rhyme>,</l>
        <l id="s12:l4" met="4" type="+-">Soeckt in hem u <rhyme label="b" type="m" corresp="#s12:l2">saligheydt</rhyme>,</l>
        <l id="s12:l5" met="4" type="+-">Want sy in gheen ander <rhyme label="b" type="m" corresp="#s12:l2">leydt</rhyme>.</l>
        <l id="s12:l6" met="4" type="+-">Danckt hem inder <rhyme label="b" type="m" corresp="#s12:l2">eeuwigheyt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

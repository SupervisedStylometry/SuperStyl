  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ACh soete <rhyme label="a" type="m">Philida</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Ick oogh u stapjes <rhyme label="a" type="m" corresp="#s1:l1">na</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Waer gaet g’ u Schaepjes <rhyme label="b" type="f">weyen</rhyme>?</l>
        <l id="s1:l4" met="3" type="-+">O mocht nu soete <rhyme label="c" type="m">Vrouw</rhyme></l>
        <l id="s1:l5" met="3" type="-+">V Philander <rhyme label="b" type="f" corresp="#s1:l3">gheleyen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Hy hem verheughen <rhyme label="c" type="m" corresp="#s1:l4">souw</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Waer toe nu dus <rhyme label="a" type="m">alleen</rhyme>?</l>
        <l id="s2:l2" met="3" type="-+">Ey laet ons ‘t samen <rhyme label="a" type="m" corresp="#s2:l1">treen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Wat vreucht baert ‘t eenigh <rhyme label="b" type="f">wesen</rhyme>?</l>
        <l id="s2:l4" met="3" type="-+">Ey schouwt doch <rhyme label="c" type="m">eenigheydt</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">Want het wort <rhyme label="b" type="f" corresp="#s2:l3">mispresen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">En ‘t baert <rhyme label="c" type="m" corresp="#s2:l4">onrustigheydt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Maer neen Philander <rhyme label="a" type="m">neen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Ick en gae niet <rhyme label="a" type="m" corresp="#s3:l1">alleen</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Maer verselt met <rhyme label="b" type="f">ghedachten</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En daer ick wesen <rhyme label="c" type="m">wil</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Sal mijn vast <rhyme label="b" type="f" corresp="#s3:l3">verwachten</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Mijn speelnoot <rhyme label="c" type="m" corresp="#s3:l4">Amaril</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ha schoone Veldt <rhyme label="a" type="m">Godin</rhyme>:</l>
        <l id="s4:l2" met="3" type="-+">Ick ken ‘t die <rhyme label="a" type="m" corresp="#s4:l1">Herderin</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Is waert te zijn <rhyme label="b" type="f">ghepresen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">‘t Kan zijn sy u <rhyme label="c" type="m">bemint</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">Maer het sal maer <rhyme label="b" type="f" corresp="#s4:l3">wesen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Tot Cloris eens <rhyme label="c" type="m" corresp="#s4:l4">verwint</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Neen Herder ‘k weet wel <rhyme label="a" type="m">dat</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Sy noyt een liever <rhyme label="a" type="m" corresp="#s5:l1">hadt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Als my, en ick haer <rhyme label="b" type="f">mede</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Geen Herders vleyen <rhyme label="c" type="m">soet</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Noch aenghename <rhyme label="b" type="f" corresp="#s5:l3">rede</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Ons liefde scheyden <rhyme label="c" type="m" corresp="#s5:l4">doet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Dat seyt ghy oock wel <rhyme label="a" type="m">mee</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Wel eer van <rhyme label="a" type="m" corresp="#s6:l1">Galathe</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Maer dat ‘s nu wel <rhyme label="b" type="f">ghebleken</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Haer liefde was <rhyme label="c" type="m">verkout</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Als van min quam <rhyme label="b" type="f" corresp="#s6:l3">spreken</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Die haer nu heeft <rhyme label="c" type="m" corresp="#s6:l4">ghetrout</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Dus kiest o schoone <rhyme label="a" type="m">Vrouw</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Een dienaer die <rhyme label="a" type="m" corresp="#s7:l1">ghetrouw</rhyme></l>
        <l id="s7:l3" met="3" type="-+">V sal zijn tot het <rhyme label="b" type="f">sterven</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Kiest sulck een <rhyme label="c" type="m">Speelghenoot</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Die ghy noyt en sult <rhyme label="b" type="f" corresp="#s7:l3">derven</rhyme>:</l>
        <l id="s7:l6" met="3" type="-+">Dan alleen door de <rhyme label="c" type="m" corresp="#s7:l4">doodt</rhyme>.</l>
      </lg>
    </lg>

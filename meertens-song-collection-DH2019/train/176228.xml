    <melody>Christe qui lux es et dies</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Jacobus Revius</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Christe, die zijt dach en <rhyme label="a" type="m">licht</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">'tIs al ontdeckt voor u <rhyme label="a" type="m" corresp="#s1:l1">gesicht</rhyme>.</l>
        <l id="s1:l3" met="4" type="-+">Ghy Vaderlijckes lichtes <rhyme label="b" type="m">glants</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Leert ons den wech der waerheyt <rhyme label="b" type="m" corresp="#s1:l3">gants</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Door uwe goddelijcke <rhyme label="a" type="m">cracht</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Behoedet ons in desen <rhyme label="a" type="m" corresp="#s2:l1">nacht</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">En nimmermeer van ons en <rhyme label="b" type="m">scheydt</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Met uwe <rhyme label="b" type="m" corresp="#s2:l3">ontfermherticheyt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Aen onsen slaep een mate <rhyme label="a" type="m">stel</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Dat ons de vyant niet en <rhyme label="a" type="m" corresp="#s3:l1">quel</rhyme>.</l>
        <l id="s3:l3" met="4" type="-+">Het vleesch in tuchten suyver <rhyme label="b" type="m">zy</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">En maeckt ons dwaser sorgen <rhyme label="b" type="m" corresp="#s3:l3">vry</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Wanneer ons ooge slapen <rhyme label="a" type="m">moet</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Ons herte tot u waken <rhyme label="a" type="m" corresp="#s4:l1">doet</rhyme>.</l>
        <l id="s4:l3" met="4" type="-+">Beschermt ons met u <rhyme label="b" type="m">rechter-hant</rhyme></l>
        <l id="s4:l4" met="4" type="-+">En lost ons van der sonden <rhyme label="b" type="m" corresp="#s4:l3">bant</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Strijdt, Heer, voor uwe <rhyme label="a" type="m">Christenheyt</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">V hulpe sy haer steeds <rhyme label="a" type="m" corresp="#s5:l1">bereyt</rhyme>.</l>
        <l id="s5:l3" met="4" type="-+">Verlosset ons uyt aller <rhyme label="b" type="m">noot</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Door uwen smadelijcken <rhyme label="b" type="m" corresp="#s5:l3">doot</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Versoetet den benauden <rhyme label="a" type="m">tijt</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Daer in het lijf verdrucking' <rhyme label="a" type="m" corresp="#s6:l1">lijdt</rhyme>.</l>
        <l id="s6:l3" met="4" type="-+">De ziele die ghy, Heer, <rhyme label="b" type="m">vercoost</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Die geeft geduerich uwen <rhyme label="b" type="m" corresp="#s6:l3">troost</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">God Vader sy lof, prijs en <rhyme label="a" type="m">eer</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Oock synen Sone, onsen <rhyme label="a" type="m" corresp="#s7:l1">Heer</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Den Heyl'gen Geest sy danck <rhyme label="b" type="m">geseyt</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Van nu tot inder <rhyme label="b" type="m" corresp="#s7:l3">eeuwicheyt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

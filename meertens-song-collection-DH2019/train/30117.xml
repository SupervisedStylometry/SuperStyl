  <author>Philips van Marnix van Sint Aldegonde</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Heer, du bist mijn God end <rhyme label="a" type="f">Heere</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Ick wil dy loven nv <rhyme label="b" type="m">voortaen</rhyme>.</l>
        <l id="s1:l3" met="4" type="-+">End dijnen naeme bieden <rhyme label="a" type="f" corresp="#s1:l1">eere</rhyme>:</l>
        <l id="s1:l4" met="4" type="-+">Want du groot wondren hebst <rhyme label="b" type="m" corresp="#s1:l2">gedaen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Nae dijnen voirbestemden <rhyme label="a" type="f">rade</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Nae dijne waerheyt vast end <rhyme label="b" type="m">claer</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Die in het woirt van dijn <rhyme label="a" type="f" corresp="#s2:l1">genade</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Gestadich blijckt end <rhyme label="b" type="m" corresp="#s2:l2">openbaer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Du hebst doen steden omme <rhyme label="a" type="f">vallen</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Tot hoopen steens gantz bloot end <rhyme label="b" type="m">naeckt</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Ia vaste steden met haer <rhyme label="a" type="f" corresp="#s3:l1">wallen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Tot scherven ende gruys <rhyme label="b" type="m" corresp="#s3:l2">gemaeckt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Der vremder huysen end <rhyme label="a" type="f">woinsteden</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Hebstu ter eirden gantz <rhyme label="b" type="m">geslicht</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">So dat sy voorts in <rhyme label="a" type="f" corresp="#s4:l1">eewicheden</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Niet meer en worden <rhyme label="b" type="m" corresp="#s4:l2">opgericht</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Dies sal dy prijsen ende <rhyme label="a" type="f">loven</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Een volck zeer groot end sterck van <rhyme label="b" type="m">kracht</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">End alle Heydens <rhyme label="a" type="f" corresp="#s5:l1">daerenboven</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Sick vreesen voir dijn groote <rhyme label="b" type="m" corresp="#s5:l2">macht</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Want du, o Heere, bist den <rhyme label="a" type="f">ermen</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Een stercke borgt end zeer vast <rhyme label="b" type="m">huys</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Du kanst den schaemlen mensch <rhyme label="a" type="f" corresp="#s6:l1">beschermen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Du helpst hem uyt den druck end <rhyme label="b" type="m" corresp="#s6:l2">kruys</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Du bist een vest daer sick <rhyme label="a" type="f">vertrecken</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">De lieden voir storm ende <rhyme label="b" type="m">vlaeg</rhyme>.</l>
        <l id="s7:l3" met="4" type="-+">Du bist een schaedwe scherm end <rhyme label="a" type="f" corresp="#s7:l1">decken</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Heer, voir de hitte vanden <rhyme label="b" type="m" corresp="#s7:l2">daeg</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Want der tirannen storm end <rhyme label="a" type="f">winden</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Is als een vloet, die met <rhyme label="b" type="m">gewelt</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Breeckt uyt, als woud' hij't al <rhyme label="a" type="f" corresp="#s8:l1">verslinden</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">End mueren met sick sleypt int <rhyme label="b" type="m" corresp="#s8:l2">velt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Maer du legst neder al dit <rhyme label="a" type="f">woelen</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Der vremden, glijck een vlaeg end <rhyme label="b" type="m">wolck</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Den heeten brandt des lochts <rhyme label="a" type="f" corresp="#s9:l1">vercoelen</rhyme>.</l>
        <l id="s9:l4" met="4" type="-+">God buygt die tacken van tstout <rhyme label="b" type="m" corresp="#s9:l2">volck</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Want God de Heere der <rhyme label="a" type="f">heyrscharen</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Op desen berg voir sijnen <rhyme label="b" type="m">throon</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Sal alle volckeren <rhyme label="a" type="f" corresp="#s10:l1">vergaren</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">End doen een maeltijt heerlijck <rhyme label="b" type="m" corresp="#s10:l2">schoon</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Een maeltijt van tvet end <rhyme label="a" type="f">tgemeste</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Een maeltijt van seer claren <rhyme label="b" type="m">wijn</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Van vet end merg end alle <rhyme label="a" type="f" corresp="#s11:l1">tbeste</rhyme>:</l>
        <l id="s11:l4" met="4" type="-+">Van wijnen die seer suyver <rhyme label="b" type="m" corresp="#s11:l2">sijn</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">End sal op desen berg <rhyme label="a" type="f">wechnemen</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Den doeck die alle Heydnen <rhyme label="b" type="m">deckt</rhyme>:</l>
        <l id="s12:l3" met="4" type="-+">End thancxsel dat met sijnder <rhyme label="a" type="f" corresp="#s12:l1">schemen</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Sick over alle volckeren <rhyme label="b" type="m" corresp="#s12:l2">streckt</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">De Heere sal den doot <rhyme label="a" type="f">vernielen</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">End heerschen eewlijck over <rhyme label="b" type="m">tgraf</rhyme>:</l>
        <l id="s13:l3" met="4" type="-+">Hy sal de droefheyt, vande <rhyme label="a" type="f" corresp="#s13:l1">zielen</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Van d'oogen doen de tranen <rhyme label="b" type="m" corresp="#s13:l2">af</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Hy sal sijns volcx schand end <rhyme label="a" type="f">oneere</rhyme></l>
        <l id="s14:l2" met="4" type="-+">Wechnemen ende doen te <rhyme label="b" type="m">niet</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Gelooft het vry: want tis de <rhyme label="a" type="f" corresp="#s14:l1">Heere</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">Die spreeckt, end claerlijck sulcx <rhyme label="b" type="m" corresp="#s14:l2">bediet</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Dan salmen seggen met <rhyme label="a" type="f">aendachten</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">Hier is onss God, siet, hier is <rhyme label="b" type="m">hy</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">Naer wien wy overlange <rhyme label="a" type="f" corresp="#s15:l1">wachten</rhyme>,</l>
        <l id="s15:l4" met="4" type="-+">Die ons verlost end staet ons <rhyme label="b" type="m" corresp="#s15:l2">by</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Dit is de Heer onss God <rhyme label="a" type="f">genadich</rhyme>,</l>
        <l id="s16:l2" met="4" type="-+">Dien wy verwachten langen <rhyme label="b" type="m">tijt</rhyme>.</l>
        <l id="s16:l3" met="4" type="-+">Laet ons nv drijven vreugt <rhyme label="a" type="f" corresp="#s16:l1">gestadich</rhyme>,</l>
        <l id="s16:l4" met="4" type="-+">End sijn in sijnen heyl <rhyme label="b" type="m" corresp="#s16:l2">verblijt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

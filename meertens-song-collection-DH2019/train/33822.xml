  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">EEn <rhyme label="a" type="f">Sabbath-dage</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Gingh Jesus eens door 't <rhyme label="b" type="m">Saet</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">Ende dat <rhyme label="a" type="f" corresp="#s1:l1">sage</rhyme></l>
        <l id="s1:l4" met="3" type="-+">De PhariseÃ«n <rhyme label="b" type="m" corresp="#s1:l2">quaet</rhyme>;</l>
        <l id="s1:l5" met="4" type="-+">Sy sagen sijn <rhyme label="c" type="m">Discipulen</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Wat plucken van de <rhyme label="c" type="m" corresp="#s1:l5">Aderen</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Die men daer wassen <rhyme label="d" type="m">vandt</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">En wryven met de <rhyme label="d" type="m" corresp="#s1:l7">handt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Dit niet <rhyme label="a" type="f">behaeghden</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Het Phariseesch <rhyme label="b" type="m">gebroet</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Daerom sy <rhyme label="a" type="f" corresp="#s2:l1">vraeghden</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Wat is 't dat gy-lie <rhyme label="b" type="m" corresp="#s2:l2">doet</rhyme>?</l>
        <l id="s2:l5" met="4" type="-+">Wat doet gy op een <rhyme label="c" type="m">Sabbath-dagh</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Wanneer als niemandt werken <rhyme label="c" type="m" corresp="#s2:l5">magh</rhyme>?</l>
        <l id="s2:l7" met="3" type="-+">Maer Jesus, goet <rhyme label="d" type="m">bescheydt</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Weerom tot haer-lie <rhyme label="d" type="m" corresp="#s2:l7">seydt</rhyme>:</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">G' hebt wel <rhyme label="a" type="f">geleese</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Wat David eertijdts <rhyme label="b" type="m">deed'</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Toen hy, als <rhyme label="a" type="f" corresp="#s3:l1">deese</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Mijn Jongers, honger <rhyme label="b" type="m" corresp="#s3:l2">leed'</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Hy gingh vry in den Tempel <rhyme label="c" type="m">Goodts</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Door dwingen van des hongers <rhyme label="c" type="m" corresp="#s3:l5">noodts</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">En at van 't Heyligh <rhyme label="d" type="m">Broodt</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Dat Goodes Wet <rhyme label="d" type="m" corresp="#s3:l7">verboodt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">G' hebt wel <rhyme label="a" type="f">geleesen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Hoe dat de <rhyme label="b" type="m">Priesteren</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">Vry sonder <rhyme label="a" type="f" corresp="#s4:l1">vreesen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Den Sabbath <rhyme label="b" type="m" corresp="#s4:l2">schendigen</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Ook in den Tempel werken <rhyme label="c" type="m">sy</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">En sijn noghtans van sonden <rhyme label="c" type="m" corresp="#s4:l5">vry</rhyme>;</l>
        <l id="s4:l7" met="3" type="-+">Maer ik segh u-lie <rhyme label="d" type="m">weer</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Hier is als Tempel <rhyme label="d" type="m" corresp="#s4:l7">meer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Hadt gy 't <rhyme label="a" type="f">verstande</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Wat of ik heb <rhyme label="b" type="m">geseydt</rhyme>,</l>
        <l id="s5:l3" met="2" type="-+">Geen <rhyme label="a" type="f" corresp="#s5:l1">Offerhande</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Maer wel <rhyme label="b" type="m" corresp="#s5:l2">barmhartigheydt</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Begeere ik: gy dan soo <rhyme label="c" type="m">stout</rhyme></l>
        <l id="s5:l6" met="4" type="-+">d'Onnosel niet verwijten <rhyme label="c" type="m" corresp="#s5:l5">sout</rhyme>;</l>
        <l id="s5:l7" met="3" type="-+">Dus leerde Jesus <rhyme label="d" type="m">haer</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Uyt de Schrifture <rhyme label="d" type="m" corresp="#s5:l7">klaer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Hy seydt, met <rhyme label="a" type="f">oordeel</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">De Sabbath in de <rhyme label="b" type="m">Wet</rhyme>,</l>
        <l id="s6:l3" met="2" type="-+">Om 's menschen <rhyme label="a" type="f" corresp="#s6:l1">voordeel</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Van Godt is <rhyme label="b" type="m" corresp="#s6:l2">in-geset</rhyme>;</l>
        <l id="s6:l5" met="4" type="-+">Maer niet den mensche om den <rhyme label="c" type="m">dagh</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Waer uyt men wel besluyten <rhyme label="c" type="m" corresp="#s6:l5">magh</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Dat 's Menschen Soone <rhyme label="d" type="m">wis</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Heer van den Sabbath <rhyme label="d" type="m" corresp="#s6:l7">is</rhyme>.</l>
      </lg>
    </lg>
  </text>

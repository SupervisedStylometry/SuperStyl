  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ALs Moyses uyt de <rhyme label="a" type="m">slaverny</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Van 't boos Egypten vry en <rhyme label="a" type="m" corresp="#s1:l1">bly</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Naer 't Landt toe van Beloften <rhyme label="b" type="m">gongh</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Ontsprongh syn tongh, en songh, en <rhyme label="b" type="m" corresp="#s1:l3">clongh</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Hy heeft den Heer' in <rhyme label="a" type="m">vrolyckheydt</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Met een nieuw Liedt <rhyme label="a" type="m" corresp="#s2:l1">ghebenedydt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Die hem door syn' <rhyme label="b" type="m">bermhertigheydt</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Hadd' uyt de slaverny <rhyme label="b" type="m" corresp="#s2:l3">gheleydt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Soo prys ick Godt met Lof en <rhyme label="a" type="m">Sanck</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Die my ghemaeckt heeft vry en <rhyme label="a" type="m" corresp="#s3:l1">vranck</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">En uyt des Wereldts <rhyme label="b" type="m">ydelheydt</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Naer 't Hof van Begga heeft <rhyme label="b" type="m" corresp="#s3:l3">gheleydt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Als 't Vogheltjen dat was <rhyme label="a" type="m">verstrickt</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Syn banden weer heeft los <rhyme label="a" type="m" corresp="#s4:l1">ghepickt</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Dan maeckt het wonder soet <rhyme label="b" type="m">ghetier</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Het looft den Heer op syn <rhyme label="b" type="m" corresp="#s4:l3">manier</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Wanneer de Duyf den Valck <rhyme label="a" type="m">ont-snapt</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Daer sy by-naer van wirdt <rhyme label="a" type="m" corresp="#s5:l1">gheknapt</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Dan gaen haer vleughels met <rhyme label="b" type="m">ghedruys</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Dan keert sy met triomph naer <rhyme label="b" type="m" corresp="#s5:l3">huys</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Het Visken selver thoont <rhyme label="a" type="m">vermaeck</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Als 't uyt-ghespoghen heeft den <rhyme label="a" type="m" corresp="#s6:l1">haeck</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Het roert syn steertjen noch soo <rhyme label="b" type="m">bly</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Om dat het weÃªr is los en <rhyme label="b" type="m" corresp="#s6:l3">vry</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Ick ben uyt s' Wereldts Net <rhyme label="a" type="m">gheraeckt</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Godt heeft myn banden los <rhyme label="a" type="m" corresp="#s7:l1">ghemaeckt</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">En sal ick dan dit weldaet <rhyme label="b" type="m">niet</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Erkennen met een danckbaer <rhyme label="b" type="m" corresp="#s7:l3">Liet</rhyme>?</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Ah! dat ick soo veel tonghen <rhyme label="a" type="m">hadt</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Als in de Zee zyn druppels <rhyme label="a" type="m" corresp="#s8:l1">Nat</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">En Sterren in het <rhyme label="b" type="m">Firmament</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Ick sou Godt loven sonder <rhyme label="b" type="m" corresp="#s8:l3">endt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Maer soo myn wenschen valt te <rhyme label="a" type="m">licht</rhyme></l>
        <l id="s9:l2" met="4" type="-+">En dat ick blyf aen u <rhyme label="a" type="m" corresp="#s9:l1">verplicht</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Soo schenck ick aen uw' <rhyme label="b" type="m">Majesteyt</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Myn Lyf en Ziel eens voor <rhyme label="b" type="m" corresp="#s9:l3">altydt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Ick bidd' u Heer siet my togh <rhyme label="a" type="m">aen</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Wilt op myn Gift' uw' Ooghen <rhyme label="a" type="m" corresp="#s10:l1">slaen</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">En thoonen hoe dat u <rhyme label="b" type="m">behaeght</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Een suyver hert een suyver <rhyme label="b" type="m" corresp="#s10:l3">Maeght</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Ick wil u Heer met Lof en <rhyme label="a" type="m">Sangh</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Bedancken al myn leven <rhyme label="a" type="m" corresp="#s11:l1">langh</rhyme>:</l>
        <l id="s11:l3" met="4" type="-+">Maer hoe sal ick op korten <rhyme label="b" type="m">tydt</rhyme></l>
        <l id="s11:l4" met="4" type="-+">U loven soo ghy weerdigh <rhyme label="b" type="m" corresp="#s11:l3">zyt</rhyme>?</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Laet my dan op een soeter <rhyme label="a" type="m">wys</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Hier naer in 't <rhyme label="a" type="m" corresp="#s12:l1">Hemels-Paradys</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Met d'al-der-meeste <rhyme label="b" type="m">danckbaerheydt</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">U loven in-der <rhyme label="b" type="m" corresp="#s12:l3">eeuwigheydt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

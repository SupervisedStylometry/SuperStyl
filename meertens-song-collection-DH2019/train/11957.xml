  <author>Cornelis de Leeuw</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="5" type="-+">WIlt ghy nae 's levens loop tot 's Heeren <rhyme label="a" type="m">vreught</rhyme></l>
        <l id="s1:l2" met="4" type="+-">En de Eng'len Choor <rhyme label="b" type="f">gheraecken</rhyme></l>
        <l id="s1:l3" met="5" type="-+">So moet (terwijl ghy leeft) gh' u selfs in <rhyme label="a" type="m" corresp="#s1:l1">deucht</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Uwen Heylandt ghelijck <rhyme label="b" type="f" corresp="#s1:l2">maecken</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Als sijne u <rhyme label="c" type="f">gedachten</rhyme></l>
        <l id="s1:l6" met="3" type="+-">Moeten zijn; gantsch ledigh <rhyme label="d" type="m">van</rhyme></l>
        <l id="s1:l7" met="4" type="+-">'t Gheen om 't aertsche te <rhyme label="c" type="f" corresp="#s1:l5">betrachten</rhyme></l>
        <l id="s1:l8" met="3" type="+-">'t Hert locken <rhyme label="d" type="m" corresp="#s1:l6">kan</rhyme>.</l>
        <l id="s1:l9" met="3" type="-+">Ghy moet u vlytigh <rhyme label="e" type="f">wachten</rhyme>,</l>
        <l id="s1:l10" met="4" type="+-">Dat ghy nu noch oyt <rhyme label="f" type="m">bedenckt</rhyme>,</l>
        <l id="s1:l11" met="4" type="+-">'t Gheen u doet u God <rhyme label="e" type="f" corresp="#s1:l9">verachten</rhyme>,</l>
        <l id="s1:l12" met="2" type="-+">Of deuchden <rhyme label="f" type="m" corresp="#s1:l10">krenckt</rhyme>.</l>
        <l id="s1:l13" met="4" type="+-">Op sijn deughdelijcke <rhyme label="g" type="f">wercken</rhyme>,</l>
        <l id="s1:l14" met="4" type="+-">Hert en sinnen moeten <rhyme label="g" type="f" corresp="#s1:l13">mercken</rhyme>,</l>
        <l id="s1:l15" met="4" type="+-">Om u geeft in deucht te <rhyme label="g" type="f" corresp="#s1:l13">stercken</rhyme>,</l>
        <l id="s1:l16" met="3" type="+-">Die u God <rhyme label="h" type="m">gebiet</rhyme>.</l>
        <l id="s1:l17" met="4" type="+-">Wat hier tegen mochte <rhyme label="i" type="f">strijden</rhyme>,</l>
        <l id="s1:l18" met="4" type="+-">In u ziel wilt nimmer <rhyme label="i" type="f" corresp="#s1:l17">lijden</rhyme>.</l>
        <l id="s1:l19" met="4" type="+-">Die 't quaet plaetz, gheen waer <rhyme label="i" type="f" corresp="#s1:l17">verblijden</rhyme></l>
        <l id="s1:l20" met="3" type="+-">In sijn hert <rhyme label="h" type="m" corresp="#s1:l16">gheniet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="5" type="-+">Een soeten Bron soet water borrelt <rhyme label="a" type="m">uyt</rhyme>;</l>
        <l id="s2:l2" met="4" type="+-">Goede Aerde goe vrucht <rhyme label="b" type="f">draghen</rhyme></l>
        <l id="s2:l3" met="5" type="-+">Sal. Uyt een goe ghedacht, een reden <rhyme label="a" type="m" corresp="#s2:l1">spruyt</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Welcke Gode kan <rhyme label="b" type="f" corresp="#s2:l2">behaghen</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Uyt onses Heylants <rhyme label="c" type="f">woorden</rhyme>,</l>
        <l id="s2:l6" met="3" type="+-">Welcken hy ghesproocken <rhyme label="d" type="m">heeft</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Niemant oyt ter Weerelt <rhyme label="c" type="f" corresp="#s2:l5">hoorden</rhyme>,</l>
        <l id="s2:l8" met="3" type="+-">Dat aenstoot <rhyme label="d" type="m" corresp="#s2:l6">gheeft</rhyme>.</l>
        <l id="s2:l9" met="3" type="-+">Gheen woorden wilt <rhyme label="e" type="f">uytspreecken</rhyme></l>
        <l id="s2:l10" met="4" type="+-">Oneerlijck, vuyl, <rhyme label="f" type="m">onbeleeft</rhyme>,</l>
        <l id="s2:l11" met="4" type="+-">Idel, die vol leughen <rhyme label="e" type="f" corresp="#s2:l9">steecken</rhyme>,</l>
        <l id="s2:l12" met="2" type="-+">Die Godt <rhyme label="f" type="m" corresp="#s2:l10">we'erstreeft</rhyme>.</l>
        <l id="s2:l13" met="4" type="+-">Woorden spreeckt vol <rhyme label="g" type="f">heyligheden</rhyme>,</l>
        <l id="s2:l14" met="4" type="+-">Eerlijck, die u <rhyme label="g" type="f" corresp="#s2:l13">medeleden</rhyme></l>
        <l id="s2:l15" met="4" type="+-">Leeren konnen 's Heeren <rhyme label="g" type="f" corresp="#s2:l13">reden</rhyme></l>
        <l id="s2:l16" met="3" type="+-">En de <rhyme label="h" type="m">heyligheydt</rhyme>.</l>
        <l id="s2:l17" met="4" type="+-">Anders spreeckt niet dan ter <rhyme label="i" type="f">eeren</rhyme></l>
        <l id="s2:l18" met="4" type="+-">Jesu Christi, d'Heer der <rhyme label="i" type="f" corresp="#s2:l17">Heeren</rhyme>:</l>
        <l id="s2:l19" met="4" type="+-">Woorden, die de hoop <rhyme label="i" type="f" corresp="#s2:l17">vermeeren</rhyme></l>
        <l id="s2:l20" met="3" type="+-">Van u <rhyme label="h" type="m" corresp="#s2:l16">saligheydt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="5" type="-+">Woort sonder daet niet gelt voor onsen <rhyme label="a" type="m">Godt</rhyme>.</l>
        <l id="s3:l2" met="4" type="+-">Wilt ghy recht Gods Soon <rhyme label="b" type="f">ghelijcken</rhyme></l>
        <l id="s3:l3" met="5" type="-+">Met Christo hout volmaeckt oock Gods <rhyme label="a" type="m" corresp="#s3:l1">gebod</rhyme>;</l>
        <l id="s3:l4" met="4" type="+-">Van sijn Wetten wilt, noyt <rhyme label="b" type="f" corresp="#s3:l2">wijcken</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Noyt heeftmen eene <rhyme label="c" type="f">sonden</rhyme></l>
        <l id="s3:l6" met="3" type="+-">(Hoe gheringh die wesen <rhyme label="d" type="m">mocht</rhyme>)</l>
        <l id="s3:l7" met="4" type="+-">By Gods lieven Soon <rhyme label="c" type="f" corresp="#s3:l5">ghevonden</rhyme>:</l>
        <l id="s3:l8" met="3" type="+-">Hy 't goet stadigh <rhyme label="d" type="m" corresp="#s3:l6">wrocht</rhyme>.</l>
        <l id="s3:l9" met="3" type="-+">Doet oock als hy. <rhyme label="e" type="f">Rechtvaerdigh</rhyme>,</l>
        <l id="s3:l10" met="4" type="+-">Lijdtsaem sijt, en milt, en <rhyme label="f" type="m">goet</rhyme>:</l>
        <l id="s3:l11" met="4" type="+-">Sijt u vyant gantsch goet <rhyme label="e" type="f" corresp="#s3:l9">aerdigh</rhyme>.</l>
        <l id="s3:l12" met="2" type="-+">Den armen <rhyme label="f" type="m" corresp="#s3:l10">voet</rhyme>.</l>
        <l id="s3:l13" met="4" type="+-">Op den Heer stelt u <rhyme label="g" type="f">vertrouwen</rhyme>.</l>
        <l id="s3:l14" met="4" type="+-">Wilt in liefde niet <rhyme label="g" type="f" corresp="#s3:l13">verkouwen</rhyme>,</l>
        <l id="s3:l15" met="4" type="+-">Schoon dat ramp en kruys <rhyme label="g" type="f" corresp="#s3:l13">benouwen</rhyme></l>
        <l id="s3:l16" met="3" type="+-">U, en u <rhyme label="h" type="m">gheslacht</rhyme>.</l>
        <l id="s3:l17" met="4" type="+-">Sijt staegh Heyligh in u <rhyme label="i" type="f">weghen</rhyme>,</l>
        <l id="s3:l18" met="4" type="+-">'t Gae u wel, of 't gae u <rhyme label="i" type="f" corresp="#s3:l17">teghen</rhyme>:</l>
        <l id="s3:l19" met="4" type="+-">Soo wert u des Heeren <rhyme label="i" type="f" corresp="#s3:l17">zeghen</rhyme></l>
        <l id="s3:l20" met="3" type="+-">Van hem t'Huys <rhyme label="h" type="m" corresp="#s3:l16">ghebracht</rhyme>.</l>
      </lg>
    </lg>
  </text>

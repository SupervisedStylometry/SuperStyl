  <author>Willem Sluiter</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Laet ons van herten zijn <rhyme label="a" type="m">verblijdt</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Gelijck men in des Ooghstes <rhyme label="a" type="m" corresp="#s1:l1">tijdt</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Gemeenlijck plagh te zijn <rhyme label="b" type="m">verheugt</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Met ongemeene lust en <rhyme label="b" type="m" corresp="#s1:l3">vreughdt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wy hebben weer den tijdt <rhyme label="a" type="m">beleeft</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Dat aller dingen Schepper <rhyme label="a" type="m" corresp="#s2:l1">heeft</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Een goeden ooghst gegeven <rhyme label="b" type="m">weer</rhyme>:</l>
        <l id="s2:l4" met="4" type="-+">Daer voor behoort hem lof en <rhyme label="b" type="m" corresp="#s2:l3">eer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Laet ons Godt vresen al te <rhyme label="a" type="m">saem</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Die op ons' landt soo <rhyme label="a" type="m" corresp="#s3:l1">aengenaem</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Sijn soeten regen vallen <rhyme label="b" type="m">laet</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">In sijnen tijdt vroegh ende <rhyme label="b" type="m" corresp="#s3:l3">spaed'</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Die ons des ooghstes weken <rhyme label="a" type="m">spaert</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">En die gesette tijdt <rhyme label="a" type="m" corresp="#s4:l1">bewaert</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Maer op de mensch inhalen <rhyme label="b" type="m">sal</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Sijn kooren en sijn vruchten <rhyme label="b" type="m" corresp="#s4:l3">al</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Gy drenckt de bergen al te <rhyme label="a" type="m">mael</rhyme></l>
        <l id="s5:l2" met="4" type="-+">O Heer, uit 's Hemels <rhyme label="a" type="m" corresp="#s5:l1">Opper-sael</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Wanneer de aerdt van dorheidt <rhyme label="b" type="m">sucht</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Versaedt haer uwer wercken <rhyme label="b" type="m" corresp="#s5:l3">vrucht</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Gy doet dat 't gras voor 't vee <rhyme label="a" type="m">uitspruit</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">En tot des menschen dienst en <rhyme label="a" type="m" corresp="#s6:l1">kruit</rhyme>;</l>
        <l id="s6:l3" met="4" type="-+">Gy doet ons uit der aerden <rhyme label="b" type="m">schoot</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Voortkomen 't hert-versterckend' <rhyme label="b" type="m" corresp="#s6:l3">broodt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Men heeft vervult alleen sijn <rhyme label="a" type="m">handt</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Vol kooren, dat men werpt in 't <rhyme label="a" type="m" corresp="#s7:l1">landt</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">De vrucht daer van maeckt een <rhyme label="b" type="m">geruisch</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Gelijck des Libanons <rhyme label="b" type="m" corresp="#s7:l3">gedruisch</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Wanneer de mensche buiten <rhyme label="a" type="m">gaet</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Des morgens vroegh en 's avonds <rhyme label="a" type="m" corresp="#s8:l1">laet</rhyme>.</l>
        <l id="s8:l3" met="4" type="-+">Doet gy hem juichen als hy <rhyme label="b" type="m">siet</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Wat wonder dat van u <rhyme label="b" type="m" corresp="#s8:l3">geschiedt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Door uwen zegen <rhyme label="a" type="m">veelderhandt</rhyme></l>
        <l id="s9:l2" met="4" type="-+">O goede Godt, besoeckt gy 't <rhyme label="a" type="m" corresp="#s9:l1">landt</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Den regen gy 't begeeren <rhyme label="b" type="m">doet</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">En geeft hem dien in <rhyme label="b" type="m" corresp="#s9:l3">overvloedt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Uw' bron waer uit den regen <rhyme label="a" type="m">koomt</rhyme>,.</l>
        <l id="s10:l2" met="4" type="-+">Altijdt van waters volheidt <rhyme label="a" type="m" corresp="#s10:l1">stroomt</rhyme>.</l>
        <l id="s10:l3" met="4" type="-+">'t Landt soo bereidt op ieder <rhyme label="b" type="m">oort</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Doet gy haer kooren brengen <rhyme label="b" type="m" corresp="#s10:l3">voort</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Wanneer de aerdt is <rhyme label="a" type="m">opgeploeght</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Maeckt gyse droncken en <rhyme label="a" type="m" corresp="#s11:l1">vernoeght</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Wanneer gy uwen zegen <rhyme label="b" type="m">soet</rhyme></l>
        <l id="s11:l4" met="4" type="-+">In sijne vooren dalen <rhyme label="b" type="m" corresp="#s11:l3">doet</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Het harde lant aen ieder <rhyme label="a" type="m">streeck</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Maeckt gy door uwe dropp'len <rhyme label="a" type="m" corresp="#s12:l1">weeck</rhyme>;</l>
        <l id="s12:l3" met="4" type="-+">Gy zegent alles dat het <rhyme label="b" type="m">spruit</rhyme></l>
        <l id="s12:l4" met="4" type="-+">Seer lieffelick ter aerden <rhyme label="b" type="m" corresp="#s12:l3">uit</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Gy kroont het Iaer met <rhyme label="a" type="m">goedigheidt</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Uw' voetstap druipt van <rhyme label="a" type="m" corresp="#s13:l1">vettigheidt</rhyme>:</l>
        <l id="s13:l3" met="4" type="-+">Soo dat de weiden der <rhyme label="b" type="m">woestijn</rhyme></l>
        <l id="s13:l4" met="4" type="-+">Daer van geheel bedropen <rhyme label="b" type="m" corresp="#s13:l3">zijn</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">De heuvelen seer cierlijck <rhyme label="a" type="m">staen</rhyme></l>
        <l id="s14:l2" met="4" type="-+">Als met verheugingh <rhyme label="a" type="m" corresp="#s14:l1">aengedaen</rhyme>;</l>
        <l id="s14:l3" met="4" type="-+">Het veldt is grasigh voor het <rhyme label="b" type="m">vee</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">En over al bedeckt daer <rhyme label="b" type="m" corresp="#s14:l3">mee</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Waer gy uw' oogen henen <rhyme label="a" type="m">streckt</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">De dalen zijn met koorn <rhyme label="a" type="m" corresp="#s15:l1">bedeckt</rhyme>;</l>
        <l id="s15:l3" met="4" type="-+">Sy juichen over al seer <rhyme label="b" type="m">bly</rhyme>,</l>
        <l id="s15:l4" met="4" type="-+">En van geneughte singen <rhyme label="b" type="m" corresp="#s15:l3">sy</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">o God, die alles wat daer <rhyme label="a" type="m">leeft</rhyme></l>
        <l id="s16:l2" met="4" type="-+">Alleen sijn spijs en voedtsel <rhyme label="a" type="m" corresp="#s16:l1">geeft</rhyme>,</l>
        <l id="s16:l3" met="4" type="-+">Maeckt ons tot aller tijdt <rhyme label="b" type="m">bereidt</rhyme></l>
        <l id="s16:l4" met="4" type="-+">Tot waeren lof en <rhyme label="b" type="m" corresp="#s16:l3">danckbaerheidt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

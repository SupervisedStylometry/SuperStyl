<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>22702</id>
    <date>
      <year-start>1576</year-start>
      <year-end>1582</year-end>
    </date>
    <tags>
      <tag standard-name="vermaanlied" translation="admonitory song">vermaanlied</tag>
    </tags>
    <melody>De dag en wil niet verborgen zijn het is schoon dag</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>David Joris</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Den Dach mach niet verborgen <rhyme label="a" type="m">sijn</rhyme>,</l>
        <l id="s1:l2" met="2" type="-+">Op dit <rhyme label="a" type="m" corresp="#s1:l1">termijn</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Daer Hemel und' Aerde so schoon in <rhyme label="b" type="m">staet</rhyme>.</l>
        <l id="s1:l4" met="4" type="-+">Ick sach, so het plach, openbaren <rhyme label="a" type="m" corresp="#s1:l1">fijn</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Allen duysteren <rhyme label="a" type="m" corresp="#s1:l1">schijn</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Scheyden dat ghoet al wt dat <rhyme label="b" type="m" corresp="#s1:l3">quaet</rhyme>:</l>
        <l id="s1:l7" met="2" type="-+">O wtvercoren <rhyme label="b" type="m" corresp="#s1:l3">Saet</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Die Gerechtige <rhyme label="c" type="m">beswaert</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">In den Dach <rhyme label="c" type="m" corresp="#s1:l8">verclaert</rhyme>,</l>
        <l id="s1:l10" met="4" type="-+">Wert nu verdruct, van die Werlt <rhyme label="d" type="m">benijt</rhyme>,</l>
        <l id="s1:l11" met="4" type="+-">Hy sal noch triumpheren als kompt den <rhyme label="d" type="m" corresp="#s1:l10">Tijt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">T'is huyden den Dach van <rhyme label="a" type="m">salicheydt</rhyme>,</l>
        <l id="s2:l2" met="2" type="-+">U herten <rhyme label="a" type="m" corresp="#s2:l1">bereydt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Ghy Vreemdelinghen inder Aerden <rhyme label="b" type="m">eenpaer</rhyme>:</l>
        <l id="s2:l4" met="4" type="-+">Doet u pelgrimage sonder <rhyme label="a" type="m" corresp="#s2:l1">verbeydt</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Den wech die u <rhyme label="a" type="m" corresp="#s2:l1">leydt</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Tot dat Landt van rusten unde vreden <rhyme label="b" type="m" corresp="#s2:l3">voorwaer</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">Wandelt sonder <rhyme label="b" type="m" corresp="#s2:l3">vaer</rhyme>:</l>
        <l id="s2:l8" met="3" type="-+">Die Gherechtighe <rhyme label="c" type="m">beswaert</rhyme>:</l>
        <l id="s2:l9" met="3" type="-+">Inden Dach <rhyme label="c" type="m" corresp="#s2:l8">verclaert</rhyme>,</l>
        <l id="s2:l10" met="4" type="-+">Werdt nu verdruckt, van die Werlt <rhyme label="d" type="m">benijdt</rhyme>,</l>
        <l id="s2:l11" met="4" type="+-">Hy sal noch triumpheren als kompt den <rhyme label="d" type="m" corresp="#s2:l10">Tijdt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Rust niet inden Dach van dit <rhyme label="a" type="m">percket</rhyme>,</l>
        <l id="s3:l2" met="2" type="-+">Werdt niet <rhyme label="a" type="m" corresp="#s3:l1">belet</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Voldoet u belofte ghy Edel <rhyme label="b" type="m">Engien</rhyme>:</l>
        <l id="s3:l4" met="4" type="-+">Waeckt scherpelijck alle int <rhyme label="a" type="m" corresp="#s3:l1">Gebet</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Holdt s'Heeren <rhyme label="a" type="m" corresp="#s3:l1">Gheset</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Mit suyvere herten suldy Godt <rhyme label="b" type="m" corresp="#s3:l3">sien</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">Unde anders <rhyme label="b" type="m" corresp="#s3:l3">ghien</rhyme>:</l>
        <l id="s3:l8" met="3" type="-+">Die Gherechtighe <rhyme label="c" type="m">beswaert</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Inden dach <rhyme label="c" type="m" corresp="#s3:l8">verclaert</rhyme>,</l>
        <l id="s3:l10" met="4" type="-+">Werdt nu verdruckt, van die Werlt <rhyme label="d" type="m">benijdt</rhyme>,</l>
        <l id="s3:l11" met="4" type="+-">Hy sal noch triumpheren als kompt den <rhyme label="d" type="m" corresp="#s3:l10">Tijdt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Doet u die Werlt groot <rhyme label="a" type="m">ghewelt</rhyme>,</l>
        <l id="s4:l2" met="2" type="-+">Die sondichste <rhyme label="a" type="m" corresp="#s4:l1">scheldt</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Acht-es niet, want u Heer is so <rhyme label="b" type="m">gheloont</rhyme>:</l>
        <l id="s4:l4" met="4" type="-+">Het werdt u te voren al <rhyme label="a" type="m" corresp="#s4:l1">ghespelt</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Die daer sijt <rhyme label="a" type="m" corresp="#s4:l1">ghetelt</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Van Eewicheyt daer toe <rhyme label="b" type="m" corresp="#s4:l3">ghecroont</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">Inden tijt <rhyme label="b" type="m" corresp="#s4:l3">vertoont</rhyme>:</l>
        <l id="s4:l8" met="3" type="-+">Die Gherechtighe <rhyme label="c" type="m">beswaert</rhyme>:</l>
        <l id="s4:l9" met="3" type="-+">Inden Dach <rhyme label="c" type="m" corresp="#s4:l8">verclaert</rhyme>,</l>
        <l id="s4:l10" met="4" type="-+">Werdt nu verdruckt, van die Werlt <rhyme label="d" type="m">benijdt</rhyme>,</l>
        <l id="s4:l11" met="4" type="+-">Hy sal noch triumpheren als kompt den <rhyme label="d" type="m" corresp="#s4:l10">Tijdt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Prince, wel hem der in u is <rhyme label="a" type="m">wijs</rhyme>,</l>
        <l id="s5:l2" met="2" type="-+">Unde na u <rhyme label="a" type="m" corresp="#s5:l1">spijs</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Honghert na dat verborghen <rhyme label="b" type="m">Rijck</rhyme>:</l>
        <l id="s5:l4" met="4" type="-+">Der d'Werlt sterft mit haer <rhyme label="a" type="m" corresp="#s5:l1">advijs</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">Ontfangt den <rhyme label="a" type="m" corresp="#s5:l1">prijs</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">So hy overwindt int Geloofs <rhyme label="b" type="m" corresp="#s5:l3">geblijck</rhyme>,</l>
        <l id="s5:l7" met="2" type="-+">Hoort alle <rhyme label="b" type="m" corresp="#s5:l3">ghelijck</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Die Gherechtighe <rhyme label="c" type="m">beswaert</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">Inden Dach <rhyme label="c" type="m" corresp="#s5:l8">verclaert</rhyme>,</l>
        <l id="s5:l10" met="4" type="-+">Werdt nu verdruckt, van die Werlt <rhyme label="d" type="m">benijdt</rhyme>,</l>
        <l id="s5:l11" met="4" type="+-">Hy sal noch triumpheren als kompt den <rhyme label="d" type="m" corresp="#s5:l10">Tijdt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

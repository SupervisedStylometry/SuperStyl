  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Godt die onse Vader <rhyme label="a" type="m">bist</rhyme>,</l>
        <l id="s1:l2" met="2" type="-+">Door Jesum <rhyme label="a" type="m" corresp="#s1:l1">Christ</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Gheef dynen Gheest ons al <rhyme label="b" type="m">ghemeyn</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Die ons ter waerheyt <rhyme label="c" type="f">leyde</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">Verhoor' ons doch tot deser <rhyme label="d" type="m">stondt</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">Open' den <rhyme label="d" type="m" corresp="#s1:l5">mont</rhyme></l>
        <l id="s1:l7" met="4" type="-+">Dijns  dienaers, dat hy dijn Woort <rhyme label="b" type="m" corresp="#s1:l3">reyn</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">End' vrymoedigh <rhyme label="c" type="f" corresp="#s1:l4">verbreyde</rhyme>:</l>
        <l id="s1:l9" met="4" type="-+">Daer toe, O Heer, <rhyme label="e" type="m">ghenadelijck</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">Open' ons hert' end' <rhyme label="f" type="f">ooren</rhyme>,</l>
        <l id="s1:l11" met="4" type="+-">Dat wy dat hooren <rhyme label="e" type="m" corresp="#s1:l9">vlytelijck</rhyme></l>
        <l id="s1:l12" met="3" type="-+">End' trouwelijck <rhyme label="g" type="f">bewaren</rhyme>:</l>
        <l id="s1:l13" met="4" type="-+">Op dat wy moghen <rhyme label="e" type="m" corresp="#s1:l9">vruchtbaerlijck</rhyme>,</l>
        <l id="s1:l14" met="3" type="-+">Dijn Lof altijdt <rhyme label="g" type="f" corresp="#s1:l12">verclaren</rhyme>.</l>
      </lg>
    </lg>

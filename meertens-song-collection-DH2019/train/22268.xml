    <melody>Jauchzet dem Herrn alle Land</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ALs Godt de Heer sal keeren <rhyme label="a" type="m">fyn</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Zyons gheuanckenis wt de <rhyme label="a" type="m" corresp="#s1:l1">pijn</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Dan sullen wy den droomenden <rhyme label="b" type="f">glijcken</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">En dan sal onse mondt vol blijschapp <rhyme label="a" type="m" corresp="#s1:l1">zijn</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">En ons tongh vol roemens <rhyme label="b" type="f" corresp="#s1:l3">diesglijcken</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Alsdan salmen seggen van stonden <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Onder den Heyden, op hunlieder <rhyme label="a" type="m" corresp="#s2:l1">baen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">De Heer heeft hun ghedaen seer <rhyme label="b" type="f">veele</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Hy heeft oock seer vele aen ons <rhyme label="a" type="m" corresp="#s2:l1">ghedaen</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Dies syn wy vrolijcken <rhyme label="b" type="f" corresp="#s2:l3">gheheele</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Keert onse gheuanckenisse o <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Ghelijck ghy de watren wtdronckt <rhyme label="a" type="m" corresp="#s3:l1">seer</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Des Somers, en die dan <rhyme label="b" type="f">sayen</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Met tranen, die sullen certeyn veel <rhyme label="a" type="m" corresp="#s3:l1">meer</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Tselfft met grootre vruechd <rhyme label="b" type="f" corresp="#s3:l3">afmayen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Sy gaen wel wech met suchten en <rhyme label="a" type="m">weenen</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Maer sy comen wedrom al blijd met <rhyme label="a" type="m" corresp="#s4:l1">eenen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Met hun eedle zaet te <rhyme label="b" type="f">draghen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">En sy brenghen hun schoouen in met <rhyme label="a" type="m" corresp="#s4:l1">eenen</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Dat gheeff ons oock Godt tallen <rhyme label="b" type="f" corresp="#s4:l3">daghen</rhyme>.</l>
      </lg>
    </lg>
  </text>

    </categories>
  <author>Cornelis de Leeuw</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">HEt oordeel uws <rhyme label="a" type="m">ghewis</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Veel meer te achten <rhyme label="a" type="m" corresp="#s1:l1">is</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Dan aller menschen <rhyme label="b" type="f">smeecken</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Die, of uyt <rhyme label="c" type="m">gierigheyt</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Of uyt staet <rhyme label="c" type="m" corresp="#s1:l4">suchtigheyt</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Soo als u lief is, <rhyme label="b" type="f" corresp="#s1:l3">spreecken</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Een Goddelijcke <rhyme label="a" type="m">saeck</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Ist stomme <rhyme label="a" type="m" corresp="#s2:l1">herten-spraeck</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Sijdt ghy vervult van <rhyme label="b" type="f">deughden</rhyme>.</l>
        <l id="s2:l4" met="3" type="-+">Een Paradijs sy <rhyme label="c" type="m">is</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Waer inmen vint <rhyme label="c" type="m" corresp="#s2:l4">ghewis</rhyme></l>
        <l id="s2:l6" met="3" type="-+">De volheyt aller <rhyme label="b" type="f" corresp="#s2:l3">vreughden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">By haer en is geen <rhyme label="a" type="m">schadt</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Geen Conincklijcke <rhyme label="a" type="m" corresp="#s3:l1">stadt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">In 't minste te <rhyme label="b" type="f">waerdeeren</rhyme>.</l>
        <l id="s3:l4" met="3" type="-+">Sy gheeft <rhyme label="c" type="m">welspreeckentheyt</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">Sy gheeft <rhyme label="c" type="m" corresp="#s3:l4">vrymoedigheyt</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Voor Rechters en voor <rhyme label="b" type="f" corresp="#s3:l3">Heeren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Sy is een troost in <rhyme label="a" type="m">kruys</rhyme>:</l>
        <l id="s4:l2" met="3" type="-+">Een Godt in <rhyme label="a" type="m" corresp="#s4:l1">s'herten-huys</rhyme>.</l>
        <l id="s4:l3" met="3" type="-+">Sy vreest gheen bitter <rhyme label="b" type="f">sterven</rhyme>.</l>
        <l id="s4:l4" met="3" type="-+">Ootmoet haer <rhyme label="c" type="m">bitterheyt</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Haer moet niet <rhyme label="c" type="m" corresp="#s4:l4">nederleydt</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Gheen troost laet Godt haer <rhyme label="b" type="f" corresp="#s4:l3">derven</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Is u gheweten <rhyme label="a" type="m">goet</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Gheen klap u hinder <rhyme label="a" type="m" corresp="#s5:l1">doet</rhyme></l>
        <l id="s5:l3" met="3" type="-+">By Godt en alle <rhyme label="b" type="f">vroomen</rhyme>.</l>
        <l id="s5:l4" met="3" type="-+">Of wert ghy buyten <rhyme label="c" type="m">schult</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Ghelastert, neemt <rhyme label="c" type="m" corresp="#s5:l4">gedult</rhyme>:</l>
        <l id="s5:l6" met="3" type="-+">Godt laet u eer toe <rhyme label="b" type="f" corresp="#s5:l3">komen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Schoon dat ghy wert <rhyme label="a" type="m">gheschent</rhyme>;</l>
        <l id="s6:l2" met="3" type="-+">Godt en u hert u <rhyme label="a" type="m" corresp="#s6:l1">kent</rhyme>.</l>
        <l id="s6:l3" met="3" type="-+">De vroomen smaet <rhyme label="b" type="f">verachten</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Dewijl sy vanden <rhyme label="c" type="m">Heer</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Voor smaetheyt en <rhyme label="c" type="m" corresp="#s6:l4">on-eer</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Des levens kroon <rhyme label="b" type="f" corresp="#s6:l3">verwachten</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Volght op u deughden <rhyme label="a" type="m">smaet</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">V dat niet smerten <rhyme label="a" type="m" corresp="#s7:l1">laet</rhyme>:</l>
        <l id="s7:l3" met="3" type="-+">'t Zy u ghenoegh u <rhyme label="b" type="f">Heere</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Godts allerlief'sten <rhyme label="c" type="m">zoon</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Ghelijck te sijn in <rhyme label="c" type="m" corresp="#s7:l4">hoon</rhyme>.</l>
        <l id="s7:l6" met="3" type="-+">Hy u daer voor gheeft <rhyme label="b" type="f" corresp="#s7:l3">eere</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Ghy weet dat hy <rhyme label="a" type="m">versmaet</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Gheweest is, en <rhyme label="a" type="m" corresp="#s8:l1">ghehaet</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Schoon dat hy niet en <rhyme label="b" type="f">dede</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Dan ware <rhyme label="c" type="m">heyligheyt</rhyme></l>
        <l id="s8:l5" met="3" type="-+">En gheen <rhyme label="c" type="m" corresp="#s8:l4">gheneghentheydt</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Hadt tot <rhyme label="b" type="f" corresp="#s8:l3">onheyligheden</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Die kennis in't <rhyme label="a" type="m">ghemoet</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Der vroomen vreughde <rhyme label="a" type="m" corresp="#s9:l1">voet</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Schoon boosen haer <rhyme label="b" type="f">onteeren</rhyme>:</l>
        <l id="s9:l4" met="3" type="-+">Dewijl sy weten, <rhyme label="c" type="m">dat</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Sy in des Heeren <rhyme label="c" type="m" corresp="#s9:l4">staet</rhyme></l>
        <l id="s9:l6" met="3" type="-+">In Hooghe eer <rhyme label="b" type="f" corresp="#s9:l3">verkeeren</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Doch evenwel die <rhyme label="a" type="m">wet</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Zy by u vast <rhyme label="a" type="m" corresp="#s10:l1">ghesedt</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Een goet gherucht in <rhyme label="b" type="f">waerden</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Hout staegh, vermijdt het <rhyme label="c" type="m">quaet</rhyme>;</l>
        <l id="s10:l5" met="3" type="-+">Op datmen u gheen <rhyme label="c" type="m" corresp="#s10:l4">smaet</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Met recht doe op der <rhyme label="b" type="f" corresp="#s10:l3">aerden</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Die gantsch geen werck en <rhyme label="a" type="m">maeckt</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Of schand', of lof hem <rhyme label="a" type="m" corresp="#s11:l1">naeckt</rhyme></l>
        <l id="s11:l3" met="3" type="-+">Sal licht tot quaet <rhyme label="b" type="f">vervallen</rhyme>.</l>
        <l id="s11:l4" met="3" type="-+">Die acht sijn goeden <rhyme label="c" type="m">naem</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Hout sich tot deught <rhyme label="c" type="m" corresp="#s11:l4">bequaem</rhyme>:</l>
        <l id="s11:l6" met="3" type="-+">En draeght sich wel by <rhyme label="b" type="f" corresp="#s11:l3">allen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Doch met dat ooghmerck <rhyme label="a" type="m">niet</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Dat hy alsdan <rhyme label="a" type="m" corresp="#s12:l1">gheniet</rhyme></l>
        <l id="s12:l3" met="3" type="-+">Van menschen eer: <rhyme label="b" type="f">ghepresen</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Soeckt hy te zijn by <rhyme label="c" type="m">Godt</rhyme>:</l>
        <l id="s12:l5" met="3" type="-+">Dies doet hy Godts <rhyme label="c" type="m" corresp="#s12:l4">ghebodt</rhyme></l>
        <l id="s12:l6" met="3" type="-+">Oock in niemants <rhyme label="b" type="f" corresp="#s12:l3">bywesen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Hy weet dat dit niet <rhyme label="a" type="m">kan</rhyme></l>
        <l id="s13:l2" met="3" type="-+">Ghebeuren; ten zy <rhyme label="a" type="m" corresp="#s13:l1">dan</rhyme></l>
        <l id="s13:l3" met="3" type="-+">Hy sorgh draegh om <rhyme label="b" type="f">bewaren</rhyme></l>
        <l id="s13:l4" met="3" type="-+">Een goeden naem, en <rhyme label="c" type="m">vry</rhyme></l>
        <l id="s13:l5" met="3" type="-+">Van alle sonden <rhyme label="c" type="m" corresp="#s13:l4">zy</rhyme></l>
        <l id="s13:l6" met="3" type="-+">Die zijn ghewis <rhyme label="b" type="f" corresp="#s13:l3">beswaren</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Ghelijck de schaduw 't <rhyme label="a" type="m">lijf</rhyme></l>
        <l id="s14:l2" met="3" type="-+">Of langhsaem volght of <rhyme label="a" type="m" corresp="#s14:l1">stijf</rhyme></l>
        <l id="s14:l3" met="3" type="-+">Na dat de voeten <rhyme label="b" type="f">treden</rhyme></l>
        <l id="s14:l4" met="3" type="-+">Alsoo oock noyt <rhyme label="c" type="m">verlaet</rhyme></l>
        <l id="s14:l5" met="3" type="-+">Hem d'eer, die Godt <rhyme label="c" type="m" corresp="#s14:l4">nagaet</rhyme></l>
        <l id="s14:l6" met="3" type="-+">In ware <rhyme label="b" type="f" corresp="#s14:l3">heyligheden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

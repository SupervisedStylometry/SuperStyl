  <author>Gijsbertus van Sandwijk</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">Al kan ik niet <rhyme label="a" type="f">vechten</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">Voor vrijheid en <rhyme label="a" type="f" corresp="#s1:l1">regten</rhyme>,</l>
        <l id="s1:l3" met="3" type="+-">Voor koning en <rhyme label="b" type="m">staat</rhyme>;</l>
        <l id="s1:l4" met="3" type="+-">Voor koning en <rhyme label="b" type="m" corresp="#s1:l3">staat</rhyme>;</l>
        <l id="s1:l5" met="3" type="+-">Hoe weinig <rhyme label="c" type="f">er-varen</rhyme>,</l>
        <l id="s1:l6" met="3" type="+-">Hoe jong nog van <rhyme label="c" type="f" corresp="#s1:l5">jaren</rhyme>,</l>
        <l id="s1:l7" met="3" type="+-">'k Verfoei reeds 't <rhyme label="b" type="m" corresp="#s1:l3">verraad</rhyme>.</l>
        <l id="s1:l8" met="3" type="+-">'k Verfoei reeds 't <rhyme label="b" type="m" corresp="#s1:l3">verraad</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Al kan ik niet <rhyme label="a" type="f">vechten</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">Voor vrijheid en <rhyme label="a" type="f" corresp="#s2:l1">regten</rhyme>,</l>
        <l id="s2:l3" met="3" type="+-">Voor koning en <rhyme label="b" type="m">staat</rhyme>;</l>
        <l id="s2:l4" met="3" type="+-">Voor koning en <rhyme label="b" type="m" corresp="#s2:l3">staat</rhyme>;</l>
        <l id="s2:l5" met="3" type="+-">Hoe weinig <rhyme label="c" type="f">er-varen</rhyme>,</l>
        <l id="s2:l6" met="3" type="+-">Hoe jong nog van <rhyme label="c" type="f" corresp="#s2:l5">jaren</rhyme>,</l>
        <l id="s2:l7" met="3" type="+-">'k Verfoei reeds 't <rhyme label="b" type="m" corresp="#s2:l3">verraad</rhyme>.</l>
        <l id="s2:l8" met="3" type="+-">'k Verfoei reeds 't <rhyme label="b" type="m" corresp="#s2:l3">verraad</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Kon ik hen <rhyme label="a" type="f">verdelgen</rhyme>,</l>
        <l id="s3:l2" met="3" type="+-">Die muitende <rhyme label="a" type="f" corresp="#s3:l1">Belgen</rhyme>,</l>
        <l id="s3:l3" met="3" type="+-">Ik viel hen op 't <rhyme label="b" type="m">lijf</rhyme>.</l>
        <l id="s3:l4" met="3" type="+-">Ik viel hen op 't <rhyme label="b" type="m" corresp="#s3:l3">lijf</rhyme>.</l>
        <l id="s3:l5" met="3" type="+-">Den koning <rhyme label="c" type="f">verachten</rhyme>,</l>
        <l id="s3:l6" met="3" type="+-">'s Lands wetten <rhyme label="c" type="f" corresp="#s3:l5">verkrachten</rhyme>,</l>
        <l id="s3:l7" met="3" type="+-">Ziedaar, hun <rhyme label="b" type="m" corresp="#s3:l3">bedrijf</rhyme>.</l>
        <l id="s3:l8" met="3" type="+-">Ziedaar, hun <rhyme label="b" type="m" corresp="#s3:l3">bedrijf</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

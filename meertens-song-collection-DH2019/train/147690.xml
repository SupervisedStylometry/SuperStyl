  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ZEer heylig heerlyk wys <rhyme label="a" type="f">alwaardig</rhyme></l>
        <l id="s1:l2" met="4" type="-+">En algenoegsaam groot en <rhyme label="b" type="m">goet</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Almagtig, trou en ook <rhyme label="a" type="f" corresp="#s1:l1">regtvaardig</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Waaragtig leven minlyk <rhyme label="b" type="m" corresp="#s1:l2">zoet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Van ende voor u zelfs en <rhyme label="a" type="f">allen</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Die regt kennen zyt gy <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Ja al wat in 't hert kan <rhyme label="a" type="f" corresp="#s2:l1">vallen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Zyt gy en nog oneindig <rhyme label="b" type="m" corresp="#s2:l2">meer</rhyme>:</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Zo zyn ook alle u <rhyme label="a" type="f">besluyten</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">U daden en u gansch <rhyme label="b" type="m">beleit</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">De Aard' en Hemel hoort men <rhyme label="a" type="f" corresp="#s3:l1">uiten</rhyme>:</l>
        <l id="s3:l4" met="4" type="-+">Al 's Heren doen is <rhyme label="b" type="m" corresp="#s3:l2">heerlykheit</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Al was 't dan dat gy myn wout <rhyme label="a" type="f">doden</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Voor eeuwig, gy blyft even <rhyme label="b" type="m">goet</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">De wil omhelst maar 't vleesch zeer <rhyme label="a" type="f" corresp="#s4:l1">noden</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Al wat u wysheit met my <rhyme label="b" type="m" corresp="#s4:l2">doet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Kom dan ô Heer gy zyt de <rhyme label="a" type="f">hoge</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Doet alles met my dat u <rhyme label="b" type="m">lust</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">'t Zy met of tegen myn <rhyme label="a" type="f" corresp="#s5:l1">vermoge</rhyme>:</l>
        <l id="s5:l4" met="4" type="-+">U vry beleit dat is myn <rhyme label="b" type="m" corresp="#s5:l2">rust</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Hebt gy meer eer in anders <rhyme label="a" type="f">leven</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Ziet Heer hier ben ik, dood myn <rhyme label="b" type="m">vry</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Laat uwe Eer maar zyn <rhyme label="a" type="f" corresp="#s6:l1">verheven</rhyme>:</l>
        <l id="s6:l4" met="4" type="-+">Want dat is goet of schoon ik <rhyme label="b" type="m" corresp="#s6:l2">ly</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Dog dit weet ik ô Heer <rhyme label="a" type="f">verkoren</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Dat eens van wil met u te <rhyme label="b" type="m">zyn</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Geen teken is van een <rhyme label="a" type="f" corresp="#s7:l1">verloren</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Maar van een die zak zalig <rhyme label="b" type="m" corresp="#s7:l2">zyn</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Al wat op aard' my dan kan <rhyme label="a" type="f">beuren</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Van uwe hant 't is myn al <rhyme label="b" type="m">goet</rhyme>:</l>
        <l id="s8:l3" met="4" type="-+">'k Wil over u beleit niet <rhyme label="a" type="f" corresp="#s8:l1">treuren</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Heer al u bitter is myn <rhyme label="b" type="m" corresp="#s8:l2">zoet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Wilt gy my laten onder <rhyme label="a" type="f">zonden</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">U wil bemin ik 't is myn <rhyme label="b" type="m">wel</rhyme>:</l>
        <l id="s9:l3" met="4" type="-+">Wilt gy myn slaan ja diepe <rhyme label="a" type="f" corresp="#s9:l1">wonden</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Of leiden stedes door de <rhyme label="b" type="m" corresp="#s9:l2">hel</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Wilt gy door duister my doen <rhyme label="a" type="f">treden</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Of brengen in een dorr' <rhyme label="b" type="m">woestyn</rhyme>:</l>
        <l id="s10:l3" met="4" type="-+">Ik ben met uwe wil te <rhyme label="a" type="f" corresp="#s10:l1">vreden</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">U doen zal myn genoegen <rhyme label="b" type="m" corresp="#s10:l2">zyn</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Hoe wel ik zond' en boze <rhyme label="a" type="f">daden</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Als vlesches werk gedurig <rhyme label="b" type="m">haat</rhyme>:</l>
        <l id="s11:l3" met="4" type="-+">Ook lyden, dorheit en veel <rhyme label="a" type="f" corresp="#s11:l1">kwaden</rhyme></l>
        <l id="s11:l4" met="4" type="-+">Myn om haar zelfs niet aan en <rhyme label="b" type="m" corresp="#s11:l2">staat</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Maar wensch van al te zyn <rhyme label="a" type="f">ontslagen</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Zo verr' het kwaat en zondig <rhyme label="b" type="m">is</rhyme>:</l>
        <l id="s12:l3" met="4" type="-+">Ik ben ook willig om te <rhyme label="a" type="f" corresp="#s12:l1">dragen</rhyme></l>
        <l id="s12:l4" met="4" type="-+">Als het myn 's Heren wil zo <rhyme label="b" type="m" corresp="#s12:l2">is</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">De tyt, de maat, en ook de <rhyme label="a" type="f">wyze</rhyme></l>
        <l id="s13:l2" met="4" type="-+">Laat ik vrywillig aan u <rhyme label="b" type="m">Heer</rhyme>:</l>
        <l id="s13:l3" met="4" type="-+">Gy blyft, gy komt, ik wil u <rhyme label="a" type="f" corresp="#s13:l1">pryze</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">In al u wegen even <rhyme label="b" type="m" corresp="#s13:l2">zeer</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Al wat u hant myn toekomt <rhyme label="a" type="f">zende</rhyme></l>
        <l id="s14:l2" met="4" type="-+">Dat, en niet anders ik en <rhyme label="b" type="m">wil</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Gy zyt 't begin en ook myn <rhyme label="a" type="f" corresp="#s14:l1">ende</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">Ik wagt op u en zitte <rhyme label="b" type="m" corresp="#s14:l2">stil</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">'k Wil in alles heilig <rhyme label="a" type="f">roemen</rhyme></l>
        <l id="s15:l2" met="4" type="-+">U lieven, loven, pryzen <rhyme label="b" type="m">vry</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">U goet in all' uw daden <rhyme label="a" type="f" corresp="#s15:l1">noemen</rhyme>,</l>
        <l id="s15:l4" met="4" type="-+">In alle staten t'aller <rhyme label="b" type="m" corresp="#s15:l2">ty</rhyme></l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Dit is myn wensch door Gods <rhyme label="a" type="f">genade</rhyme></l>
        <l id="s16:l2" met="4" type="-+">In myn gewrogt door 's Geestes <rhyme label="b" type="m">kragt</rhyme></l>
        <l id="s16:l3" met="4" type="-+">Ik hang van Jezus af <rhyme label="a" type="f" corresp="#s16:l1">gestade</rhyme>,</l>
        <l id="s16:l4" met="4" type="-+">Van en door wien ik alles <rhyme label="b" type="m" corresp="#s16:l2">wagt</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Ook dat, om dit te blyven <rhyme label="a" type="f">wenschen</rhyme></l>
        <l id="s17:l2" met="4" type="-+">In wensch en wil steers voort te <rhyme label="b" type="m">spoen</rhyme></l>
        <l id="s17:l3" met="4" type="-+">Tot dat ik kom daar zaal'ge <rhyme label="a" type="f" corresp="#s17:l1">menschen</rhyme></l>
        <l id="s17:l4" met="4" type="-+">Haar wensch verwisselen met <rhyme label="b" type="m" corresp="#s17:l2">doen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

    <melody>O kerstnacht schoner dan de dagen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Jodocus van Lodenstein</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DOe Israel sijn nare <rhyme label="a" type="f">sugten</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Met Pharo's slaverny <rhyme label="a" type="f" corresp="#s1:l1">ontvlugten</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">En Iacobs huys van t' volck <rhyme label="b" type="m">ontquam</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Dat, als sy 's Heren lof <rhyme label="c" type="f">verconden</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Haar taal en kende nog haar <rhyme label="c" type="f" corresp="#s1:l4">gronden</rhyme>;</l>
        <l id="s1:l6" met="4" type="-+">'t Geslagt van den vervloeckten <rhyme label="b" type="m" corresp="#s1:l3">Cham</rhyme>:</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Doe was de gulde tijd <rhyme label="a" type="f">geboren</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Dat Iuda Godes <rhyme label="a" type="f" corresp="#s2:l1">uytvercoren</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Wierd 's Hemels eygen <rhyme label="b" type="m">Heyligdom</rhyme>;</l>
        <l id="s2:l4" met="4" type="-+">En na beloften so <rhyme label="c" type="f">langwylig</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Wierd Israel ten volle ne <rhyme label="c" type="f" corresp="#s2:l4">ylig</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Gods onderdanig <rhyme label="b" type="m" corresp="#s2:l3">Coningdom</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Des Hemels Coningdom! dit <rhyme label="a" type="f">wonder</rhyme></l>
        <l id="s3:l2" met="4" type="-+">De Zee vernam, en sloeg een <rhyme label="a" type="f" corresp="#s3:l1">donder</rhyme></l>
        <l id="s3:l3" met="4" type="-+">(Dat d'aarde tsidderden) en <rhyme label="b" type="m">vlood</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Verbaast, verschrickt op d'agtbre <rhyme label="c" type="f">kondschap</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Van so een ongehoorde <rhyme label="c" type="f" corresp="#s3:l4">bondschap</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">En bood sijn grond Israel <rhyme label="b" type="m" corresp="#s3:l3">bloot</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">De stroomen die van ouds in 't <rhyme label="a" type="f">Noorden</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Van Ior- en Dan af t lande <rhyme label="a" type="f" corresp="#s4:l1">door-boorden</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Vergaapten sig, en bleven <rhyme label="b" type="m">staan</rhyme>;</l>
        <l id="s4:l4" met="4" type="-+">Vergaten haren treyn, en <rhyme label="c" type="f">lieten</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Haar Suyd-lijck nat na Sodom <rhyme label="c" type="f" corresp="#s4:l4">vlieten</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">En Isr'el droogs-voets door sig <rhyme label="b" type="m" corresp="#s4:l3">gaan</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">De Hoogten, Reusen van de <rhyme label="a" type="f">Bergen</rhyme>;</l>
        <l id="s5:l2" met="4" type="-+">De heuveltjens, der bergen <rhyme label="a" type="f" corresp="#s5:l1">dwergen</rhyme></l>
        <l id="s5:l3" met="4" type="-+">(Slegs door 't geloof <rhyme label="b" type="m">bewegelijck</rhyme>)</l>
        <l id="s5:l4" met="4" type="-+">Den Hemel hoorden dit <rhyme label="c" type="f">beloven</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">En d'Aarde sagen dit <rhyme label="c" type="f" corresp="#s5:l4">geloven</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">En sprongen Rams- en <rhyme label="b" type="m" corresp="#s5:l3">Lams-gelijck</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Gy stoute wat'ren die na <rhyme label="a" type="f">clagen</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Nog dreygen sijt gewoon te <rhyme label="a" type="f" corresp="#s6:l1">vragen</rhyme>;</l>
        <l id="s6:l3" met="4" type="-+">Wat bragt u 't vlieden in den <rhyme label="b" type="m">sin</rhyme>?</l>
        <l id="s6:l4" met="4" type="-+">Gy altijd-vlietende <rhyme label="c" type="f">Iordane</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Wat maackte uw grond dit volck ten <rhyme label="c" type="f" corresp="#s6:l4">bane</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Wat bond u snelle stroomen <rhyme label="b" type="m" corresp="#s6:l3">in</rhyme>?</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Sta stil wat Bergen, of spring <rhyme label="a" type="f">trager</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">En Heuvlen hoort eens na uw <rhyme label="a" type="f" corresp="#s7:l1">vrager</rhyme>:</l>
        <l id="s7:l3" met="4" type="-+">Wat maackten u de sware <rhyme label="b" type="m">voet</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Te ligten, als de ligte <rhyme label="c" type="f">Lammen</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Te beyt'len als de dert'le <rhyme label="c" type="f" corresp="#s7:l4">Rammen</rhyme>?</l>
        <l id="s7:l6" met="4" type="-+">Om 't wonder dat den Hemel <rhyme label="b" type="m" corresp="#s7:l3">doet</rhyme>?</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Om 't wonder, dat ons Godt dee <rhyme label="a" type="f">dagen</rhyme>!</l>
        <l id="s8:l2" met="4" type="-+">(En dus beantwoord ick mijn <rhyme label="a" type="f" corresp="#s8:l1">vragen</rhyme>)</l>
        <l id="s8:l3" met="4" type="-+">Is 't wonder, dat het Schepsel <rhyme label="b" type="m">beeft</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Als sig den Schepper self gaat <rhyme label="c" type="f">voegen</rhyme></l>
        <l id="s8:l5" met="4" type="-+">In saal'ge bondschap ten <rhyme label="c" type="f" corresp="#s8:l4">genoegen</rhyme></l>
        <l id="s8:l6" met="4" type="-+">Van 't volck dat Hy vercoren <rhyme label="b" type="m" corresp="#s8:l3">heeft</rhyme>?</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Van 't sondig volck! Ia, gansche <rhyme label="a" type="f">Wereld</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Gy Hemel cierlijck, die <rhyme label="a" type="f" corresp="#s9:l1">bepereld</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Met duysend floncker-ligten <rhyme label="b" type="m">staat</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Gy Aarde, beeft! beeft! beeft voor 't <rhyme label="c" type="f">Aansigt</rhyme></l>
        <l id="s9:l5" met="4" type="-+">Daar Goed- en Heerlijck-heyd in <rhyme label="c" type="f" corresp="#s9:l4">aanligt</rhyme></l>
        <l id="s9:l6" met="4" type="-+">Die Iacobs Godt sig noemen <rhyme label="b" type="m" corresp="#s9:l3">laat</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Staat, springt, gaat buyten uw <rhyme label="a" type="f">gewoonheyd</rhyme></l>
        <l id="s10:l2" met="4" type="-+">(Want heden treedt des Hemels <rhyme label="a" type="f" corresp="#s10:l1">Schoonheyd</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Met 's werelds Nieticheyd in <rhyme label="b" type="m">d'egt</rhyme>)</l>
        <l id="s10:l4" met="4" type="-+">Den Schepper heeft wel dorre <rhyme label="c" type="f">keyen</rhyme></l>
        <l id="s10:l5" met="4" type="-+">En rots', op dit gesigt aan 't <rhyme label="c" type="f" corresp="#s10:l4">schreyen</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Tot water-bronnen <rhyme label="b" type="m" corresp="#s10:l3">opgeregt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Christum willen wy louen <rhyme label="a" type="m">schoon</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Der reyner Maghets Maria <rhyme label="a" type="m" corresp="#s1:l1">Soon</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">So wijt die schoone Sonne <rhyme label="b" type="m">streckt</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">En aller werelt eynde <rhyme label="b" type="m" corresp="#s1:l3">reckt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Den Salichmaker aller <rhyme label="a" type="m">ding</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Nam aen eens knapens lijf <rhyme label="a" type="m" corresp="#s2:l1">ghering</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Op dat hy tvleesch door tvleesch <rhyme label="b" type="m">verwarf</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Eer dat zijn schepsel heel <rhyme label="b" type="m" corresp="#s2:l3">verdarf</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Godes ghenade van Hemel <rhyme label="a" type="m">groot</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Haer in die reyne Moeder <rhyme label="a" type="m" corresp="#s3:l1">goot</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Een Maghet droech des Hemels <rhyme label="b" type="m">pant</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Twelck der natueren Wet niet <rhyme label="b" type="m" corresp="#s3:l3">vant</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Dat zedich huys der herten <rhyme label="a" type="m">cleyn</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Wort eenen Tempel Godes <rhyme label="a" type="m" corresp="#s4:l1">reyn</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Die gheen man kent, noch oock en <rhyme label="b" type="m">port</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Beurucht van Godts woort, vonden <rhyme label="b" type="m" corresp="#s4:l3">wort</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Die edele Moeder heeft <rhyme label="a" type="m">gheboren</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Den Gabriel voorsey te <rhyme label="a" type="m" corresp="#s5:l1">voren</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">En Sint Jan met springhen <rhyme label="b" type="m">voorsach</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Doen hy in Moeders Lichaem <rhyme label="b" type="m" corresp="#s5:l3">lach</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Hy lach in t Hoey met armoey <rhyme label="a" type="m">groot</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Die herde Cribbe hem niet <rhyme label="a" type="m" corresp="#s6:l1">verdroot</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Seer cleyne melck zijn spijse <rhyme label="b" type="m">diet</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Die noyt gheen voeghel hongher <rhyme label="b" type="m" corresp="#s6:l3">liet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Des Hemels Choor verblijt hier <rhyme label="a" type="m">of</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Die Enghels singhen Gode <rhyme label="a" type="m" corresp="#s7:l1">lof</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Den armen Herderen wordt <rhyme label="b" type="m">vertelt</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Den Heer en maker aller <rhyme label="b" type="m" corresp="#s7:l3">welt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Lof, eer, en danck sy u <rhyme label="a" type="m">alleyn</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Christe gheboren des maghets <rhyme label="a" type="m" corresp="#s8:l1">reyn</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Met den Vader en heylighen Gheest <rhyme label="b" type="m">gheseyt</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Van nu tot inder <rhyme label="b" type="m" corresp="#s8:l3">eewicheyt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

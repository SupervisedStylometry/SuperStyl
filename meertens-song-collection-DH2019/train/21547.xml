  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">TReet aen gy christenen alle wie gy <rhyme label="a" type="m">zijt</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Bereyt v ten strijde tis meer dan <rhyme label="a" type="m" corresp="#s1:l1">tijt</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Den dach is nv <rhyme label="b" type="f">ghecomen</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Dat ghy Christum belijden <rhyme label="c" type="m">moet</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Sijn Woort dat sal v <rhyme label="b" type="f" corresp="#s1:l3">vromen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ghy hebbet eenen Hooptman <rhyme label="a" type="m">goet</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Iesum Christum dat edel <rhyme label="a" type="m" corresp="#s2:l1">bloet</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Willet vrijlick met hem <rhyme label="b" type="f">waghen</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Want alle die onder zijn vendelijn <rhyme label="c" type="m">zijn</rhyme></l>
        <l id="s2:l5" met="3" type="-+">En laet hy niet <rhyme label="b" type="f" corresp="#s2:l3">verslaghen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Trect aen tgheloouich tuych metter <rhyme label="a" type="m">spoet</rhyme></l>
        <l id="s3:l2" met="4" type="-+">En den creest der salicheyt voor eenen <rhyme label="a" type="m" corresp="#s3:l1">hoet</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Ende willet vromelick <rhyme label="b" type="f">strijden</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Al met dat sweert zijns Godlijcx <rhyme label="c" type="m">woorts</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Dat aen beyden zijden moet <rhyme label="b" type="f" corresp="#s3:l3">snijden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ghy en hebt te strijden teghen vlees noch <rhyme label="a" type="m">bloet</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Maer teghen de Princen der weerelt <rhyme label="a" type="m" corresp="#s4:l1">vermoet</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Die Gods woort willen <rhyme label="b" type="f">verdoouen</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Die wederstaet altijt met Gods woorden <rhyme label="c" type="m">soet</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Met vastelick te <rhyme label="b" type="f" corresp="#s4:l3">gheloouen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Belijdt Christum met blijden <rhyme label="a" type="m">moet</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Al zijnse rasende ende <rhyme label="a" type="m" corresp="#s5:l1">verwoet</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Als zy na v ghelooue <rhyme label="b" type="f">vraghen</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Oft Christum alleene v salicheyt <rhyme label="c" type="m">is</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Spreect ia, tsal den vader <rhyme label="b" type="f" corresp="#s5:l3">behaghen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Al sydy slecht en <rhyme label="a" type="m">ongheleert</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Om Christum te belijden vint v <rhyme label="a" type="m" corresp="#s6:l1">bereet</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Wilt niet dencken wat ghy sult <rhyme label="b" type="f">spreken</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Hy salt v ingheuen door synen <rhyme label="c" type="m">gheest</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Een woort en sal v niet <rhyme label="b" type="f" corresp="#s6:l3">ghebreken</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Uerwerpt haer leere en valschen <rhyme label="a" type="m">waen</rhyme></l>
        <l id="s7:l2" met="4" type="-+">En doet haer met Godes woort <rhyme label="a" type="m" corresp="#s7:l1">vermaen</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Dat wy alle salich moeten <rhyme label="b" type="f">worden</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Wt ghenade sonder de wercken des <rhyme label="c" type="m">wets</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Door Christum alleen die de persse heefe <rhyme label="b" type="f" corresp="#s7:l3">ghetorden</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">En vreest niet, sy en hebben gheen <rhyme label="a" type="m">macht</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Al zijn sy groot voor de weerelt <rhyme label="a" type="m" corresp="#s8:l1">gheacht</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Sy en konnen v niet <rhyme label="b" type="f">verdomen</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Want sy sullen zijn den hoy <rhyme label="c" type="m">ghelijck</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Als den dach des Heeren sal <rhyme label="b" type="f" corresp="#s8:l3">komen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Staet vast op dwoort des vaders <rhyme label="a" type="m">goet</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Om te strijden teghen Antichrist <rhyme label="a" type="m" corresp="#s9:l1">bloet</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Wilt in v slachtoorden <rhyme label="b" type="f">terden</rhyme></l>
        <l id="s9:l4" met="4" type="-+">En strijt als een vroom <rhyme label="c" type="m">Campioen</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Beschaemt so sullense <rhyme label="b" type="f" corresp="#s9:l3">werden</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Wat sal haer baten haer hoomot <rhyme label="a" type="m">groot</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Die v hebben ghebracht ter <rhyme label="a" type="m" corresp="#s10:l1">doot</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Als sy sullen moeten <rhyme label="b" type="f">hooren</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Gaet ghy vermaledijde int helsche <rhyme label="c" type="m">exploot</rhyme></l>
        <l id="s10:l5" met="3" type="-+">En besit mijns vaders eewighen <rhyme label="b" type="f" corresp="#s10:l3">thooren</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Siet de Stercke beloften <rhyme label="a" type="m">aen</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Die v God den vader heeft <rhyme label="a" type="m" corresp="#s11:l1">ghedaen</rhyme></l>
        <l id="s11:l3" met="3" type="-+">Op zijn woorden willet <rhyme label="b" type="f">mercken</rhyme></l>
        <l id="s11:l4" met="4" type="-+">Al sydy kranck al na den vleesch <rhyme label="c" type="m">omuaen</rhyme></l>
        <l id="s11:l5" met="3" type="-+">Met synen gheest sal hy v <rhyme label="b" type="f" corresp="#s11:l3">stercken</rhyme></l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Als ghy om kampen zijt int <rhyme label="a" type="m">velt</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Ghedenckt dees woorden en smaeckt se <rhyme label="a" type="m" corresp="#s12:l1">wel</rhyme></l>
        <l id="s12:l3" met="3" type="-+">Die Christus spreect tot uwer <rhyme label="b" type="f">baten</rhyme></l>
        <l id="s12:l4" met="4" type="-+">Al verliet een moeder tkint haers <rhyme label="c" type="m">lichaems</rhyme></l>
        <l id="s12:l5" met="3" type="-+">So en sal ick v niet <rhyme label="b" type="f" corresp="#s12:l3">verlaten</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Hoort wat Christus belouet <rhyme label="a" type="m">daer</rhyme></l>
        <l id="s13:l2" met="4" type="-+">Die my belijdt int <rhyme label="a" type="m" corresp="#s13:l1">openbaer</rhyme></l>
        <l id="s13:l3" met="3" type="-+">Uoor die menschen quaet van <rhyme label="b" type="f">daden</rhyme></l>
        <l id="s13:l4" met="4" type="-+">Die sal ick oock belijden <rhyme label="c" type="m">klaer</rhyme></l>
        <l id="s13:l5" met="3" type="-+">Uoor mynen vader vol <rhyme label="b" type="f" corresp="#s13:l3">ghenaden</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Noch spreeckt Christus dees woorden <rhyme label="a" type="m">daer</rhyme></l>
        <l id="s14:l2" met="4" type="-+">Die zijn siele wilt winnen verliestse <rhyme label="a" type="m" corresp="#s14:l1">klaer</rhyme></l>
        <l id="s14:l3" met="3" type="-+">En wilt suchten noch <rhyme label="b" type="f">beuen</rhyme></l>
        <l id="s14:l4" met="4" type="-+">Diese om mynent wille verliest <rhyme label="c" type="m">voorwaer</rhyme></l>
        <l id="s14:l5" met="3" type="-+">Die salse vinden int eewich <rhyme label="b" type="f" corresp="#s14:l3">leuen</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Als Christus zal spreken int <rhyme label="a" type="m">openbaer</rhyme></l>
        <l id="s15:l2" met="4" type="-+">Coemt ghy ghebenedijde volcht my <rhyme label="a" type="m" corresp="#s15:l1">naer</rhyme></l>
        <l id="s15:l3" met="3" type="-+">Ghy die by mijn woort zijt <rhyme label="b" type="f">bleuen</rhyme></l>
        <l id="s15:l4" met="4" type="-+">My ghespijst, ghedeckt, en ghelaeft <rhyme label="c" type="m">eenpaer</rhyme></l>
        <l id="s15:l5" met="3" type="-+">Coemt besit dat rijck tis v <rhyme label="b" type="f" corresp="#s15:l3">ghegheuen</rhyme></l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Daer staen noch gheschreuen dees woorden <rhyme label="a" type="m">rein</rhyme></l>
        <l id="s16:l2" met="4" type="-+">Die Cristus spreect tuwen troost <rhyme label="a" type="m" corresp="#s16:l1">certeyn</rhyme></l>
        <l id="s16:l3" met="3" type="-+">Wilt dese woorden wel <rhyme label="b" type="f">sommen</rhyme></l>
        <l id="s16:l4" met="4" type="-+">En vreest niet ghy hoopken al sydy <rhyme label="c" type="m">kleyn</rhyme></l>
        <l id="s16:l5" met="3" type="-+">Die weerelt heb ick <rhyme label="b" type="f" corresp="#s16:l3">verwonnen</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Niet alleene des weerelts <rhyme label="a" type="m">ghewelt</rhyme></l>
        <l id="s17:l2" met="4" type="-+">En heeft hy verwonnen verstaet dit <rhyme label="a" type="m" corresp="#s17:l1">wel</rhyme></l>
        <l id="s17:l3" met="3" type="-+">Ende al om ons <rhyme label="b" type="f">ghenesen</rhyme></l>
        <l id="s17:l4" met="4" type="-+">Maer Duyuel, Sonde, Doot ende <rhyme label="c" type="m">Hel</rhyme></l>
        <l id="s17:l5" met="3" type="-+">Dus laet ons vrolick <rhyme label="b" type="f" corresp="#s17:l3">wesen</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Dus danckt Christum alle <rhyme label="a" type="m">ghelijck</rhyme></l>
        <l id="s18:l2" met="4" type="-+">Dat hy ons ghemaect heeft van arm <rhyme label="a" type="m" corresp="#s18:l1">rijck</rhyme></l>
        <l id="s18:l3" met="3" type="-+">En als ghy wilt <rhyme label="b" type="f">versmaen</rhyme></l>
        <l id="s18:l4" met="4" type="-+">Dat doet tot synen lof prijs ende <rhyme label="c" type="m">eer</rhyme></l>
        <l id="s18:l5" met="3" type="-+">En singhet van herten, <rhyme label="b" type="f" corresp="#s18:l3">Amen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

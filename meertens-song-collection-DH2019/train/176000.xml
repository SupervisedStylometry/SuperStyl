  <author>Jacobus Revius</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">ALs na verssche <rhyme label="a" type="f">water-stroomen</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Een verdorstet herte <rhyme label="b" type="m">janckt</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Also, om tot u te <rhyme label="a" type="f" corresp="#s1:l1">comen</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Mijne ziel, o God, <rhyme label="b" type="m" corresp="#s1:l2">verlangt</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">Mijne ziel verlangen <rhyme label="c" type="m">heeft</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Nae den Heer die eeuwich <rhyme label="c" type="m" corresp="#s1:l5">leeft</rhyme>.</l>
        <l id="s1:l7" met="4" type="+-">Wanneer sal ick voor syn <rhyme label="d" type="f">oogen</rhyme></l>
        <l id="s1:l8" met="4" type="+-">Blijdelijck verschijnen <rhyme label="d" type="f" corresp="#s1:l7">mogen</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Mijne spijs' is bitter <rhyme label="a" type="f">clagen</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Nacht en dach, wanneer in <rhyme label="b" type="m">spot</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Ick den heelen dach hoor <rhyme label="a" type="f" corresp="#s2:l1">vragen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Lieve, waer is nu u <rhyme label="b" type="m" corresp="#s2:l2">God</rhyme>?</l>
        <l id="s2:l5" met="4" type="+-">Ick smelt als ick <rhyme label="c" type="m">overdinck</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Hoe ick eertijts vrolijck <rhyme label="c" type="m" corresp="#s2:l5">ginck</rhyme></l>
        <l id="s2:l7" met="4" type="+-">Met geselschap <rhyme label="d" type="f">allerhande</rhyme></l>
        <l id="s2:l8" met="4" type="+-">Doen den Heer mijn <rhyme label="d" type="f" corresp="#s2:l7">offerande</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Waerom sijt ghy soo <rhyme label="a" type="f">cleyn-moedich</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Mijne ziel? wat treurdy <rhyme label="b" type="m">doch</rhyme>?</l>
        <l id="s3:l3" met="4" type="+-">Hopet op den Heere <rhyme label="a" type="f" corresp="#s3:l1">goedich</rhyme>;</l>
        <l id="s3:l4" met="4" type="+-">Want ick sal hem dancken <rhyme label="b" type="m" corresp="#s3:l2">noch</rhyme>:</l>
        <l id="s3:l5" met="4" type="+-">Als hy door syn <rhyme label="c" type="m">aengesicht</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Mijne droefheyt heeft <rhyme label="c" type="m" corresp="#s3:l5">verlicht</rhyme>.</l>
        <l id="s3:l7" met="4" type="+-">O mijn God, mijn ziel <rhyme label="d" type="f">beswijcket</rhyme></l>
        <l id="s3:l8" met="4" type="+-">En mijn cracht gants van my <rhyme label="d" type="f" corresp="#s3:l7">wijcket</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Ick bleef uwer stedes <rhyme label="a" type="f">gedachtich</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Over des Iordanen <rhyme label="b" type="m">cant</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Oock aen Hermons berch <rhyme label="a" type="f" corresp="#s4:l1">steen-achtich</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">In het heuvelige <rhyme label="b" type="m" corresp="#s4:l2">lant</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Daer den eenen afgront <rhyme label="c" type="m">diep</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Tot den and'ren afgront <rhyme label="c" type="m" corresp="#s4:l5">riep</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">En u stercke <rhyme label="d" type="f">watergoten</rhyme></l>
        <l id="s4:l8" met="4" type="+-">D'een op d'ander <rhyme label="d" type="f" corresp="#s4:l7">nedervloten</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Al de groote <rhyme label="a" type="f">water-stromen</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Sijn Heer over my <rhyme label="b" type="m">gegaen</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">En my over t'hooft <rhyme label="a" type="f" corresp="#s5:l1">gecomen</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Maer ghy hebt my <rhyme label="b" type="m" corresp="#s5:l2">by-gestaen</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">S'daechs ghy my u troost <rhyme label="c" type="m">aenbiedt</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">S'nachts sing' ick van u een <rhyme label="c" type="m" corresp="#s5:l5">liet</rhyme>.</l>
        <l id="s5:l7" met="4" type="+-">Mijn gebet tot God <rhyme label="d" type="f">op-varet</rhyme></l>
        <l id="s5:l8" met="4" type="+-">Die by 't leven my <rhyme label="d" type="f" corresp="#s5:l7">bewaret</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">God, mijn rotze, sal ick <rhyme label="a" type="f">seggen</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Hoe comt dat ghy my <rhyme label="b" type="m">vergeet</rhyme>?</l>
        <l id="s6:l3" met="4" type="+-">Waerom moet ick treurich <rhyme label="a" type="f" corresp="#s6:l1">leggen</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Onder mijne haters <rhyme label="b" type="m" corresp="#s6:l2">wreet</rhyme>?</l>
        <l id="s6:l5" met="4" type="+-">Ick gevoel haer fellen <rhyme label="c" type="m">smaet</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Die my door de beenen <rhyme label="c" type="m" corresp="#s6:l5">gaet</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">Als sy, u tot een <rhyme label="d" type="f">oneere</rhyme>,</l>
        <l id="s6:l8" met="4" type="+-">Vragen, waer is nu de <rhyme label="d" type="f" corresp="#s6:l7">Heere</rhyme>?</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Waerom sijt ghy soo <rhyme label="a" type="f">cleyn-moedich</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Mijne ziel? wat treur dy <rhyme label="b" type="m">doch</rhyme>?</l>
        <l id="s7:l3" met="4" type="+-">Hopet op den Heere <rhyme label="a" type="f" corresp="#s7:l1">goedich</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Want ick sal hem dancken <rhyme label="b" type="m" corresp="#s7:l2">noch</rhyme>.</l>
        <l id="s7:l5" met="4" type="+-">Die my syne gonste <rhyme label="c" type="m">rijck</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Stelt voor oogen <rhyme label="c" type="m" corresp="#s7:l5">sichtbaerlijck</rhyme>,</l>
        <l id="s7:l7" met="4" type="+-">En betoont door hulpe <rhyme label="d" type="f">machtich</rhyme></l>
        <l id="s7:l8" met="4" type="+-">Dat hy is mijn God <rhyme label="d" type="f" corresp="#s7:l7">waerachtich</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

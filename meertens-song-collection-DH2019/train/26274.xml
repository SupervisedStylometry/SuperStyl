      <category translation="religion">godsdienst</category>
    </categories>
  <author>Philips van Marnix van Sint Aldegonde</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Heere, doe my <rhyme label="a" type="m">recht</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Want ick mijn wegen <rhyme label="a" type="m" corresp="#s1:l1">slecht</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Bewandel' met een vroim <rhyme label="b" type="m">gemoet</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Op God staet mijn <rhyme label="c" type="f">vertrouwen</rhyme>:</l>
        <l id="s1:l5" met="3" type="-+">Hy sal my so vast <rhyme label="c" type="f" corresp="#s1:l4">houwen</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Dat my niet struycklen sal den <rhyme label="b" type="m" corresp="#s1:l3">voet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Heer, ondergronde <rhyme label="a" type="m">my</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">End ondertaste <rhyme label="a" type="m" corresp="#s2:l1">vry</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Of ick met valscheyt <rhyme label="b" type="m">ommegae</rhyme>.</l>
        <l id="s2:l4" met="3" type="-+">Bekoir, Heer, end <rhyme label="c" type="f">betrachte</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Mijn hert end mijn <rhyme label="c" type="f" corresp="#s2:l4">gedachte</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">End mijne nieren gade <rhyme label="b" type="m" corresp="#s2:l3">slae</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Want dijn gunst end <rhyme label="a" type="m">genaed</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">My vast voir oogen <rhyme label="a" type="m" corresp="#s3:l1">staet</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">End blijft my altijts int <rhyme label="b" type="m">gesicht</rhyme>.</l>
        <l id="s3:l4" met="3" type="-+">Ick hebbe mijnen <rhyme label="c" type="f">handel</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">End allen mijnen <rhyme label="c" type="f" corresp="#s3:l4">wandel</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Nae dijne waerheyt scherp <rhyme label="b" type="m" corresp="#s3:l3">gericht</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ick hebbe noyt <rhyme label="a" type="m">geleeft</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Met tvolck dat hem <rhyme label="a" type="m" corresp="#s4:l1">begeeft</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Tot leugentael end valschen <rhyme label="b" type="m">schijn</rhyme>.</l>
        <l id="s4:l4" met="3" type="-+">End hebbe noyt <rhyme label="c" type="f">getreden</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Met lien, die in haer <rhyme label="c" type="f" corresp="#s4:l4">reden</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Bedeckt end dobbelhertig <rhyme label="b" type="m" corresp="#s4:l3">sijn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Ia ick heb eenen <rhyme label="a" type="m">haet</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Van al tgeselschap <rhyme label="a" type="m" corresp="#s5:l1">quaet</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Dat slechts nae boose rancken <rhyme label="b" type="m">tracht</rhyme>:</l>
        <l id="s5:l4" met="3" type="-+">End wil gantz niet <rhyme label="c" type="f">verkeeren</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Met tvolck dat Gods des <rhyme label="c" type="f" corresp="#s5:l4">Heeren</rhyme></l>
        <l id="s5:l6" met="4" type="-+">Geboden schendelijck <rhyme label="b" type="m" corresp="#s5:l3">veracht</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ick wasch mijn handen <rhyme label="a" type="m">reyn</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Heer, inde schoon <rhyme label="a" type="m" corresp="#s6:l1">fonteyn</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Van onschult suyver ende <rhyme label="b" type="m">claer</rhyme>:</l>
        <l id="s6:l4" met="3" type="-+">End wil so comen <rhyme label="c" type="f">treden</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Met offers end <rhyme label="c" type="f" corresp="#s6:l4">gebeden</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Om dijnen heyligen <rhyme label="b" type="m" corresp="#s6:l3">autaer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Op dat ick mach, <rhyme label="a" type="m">verblijt</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Doen luyden verr' end <rhyme label="a" type="m" corresp="#s7:l1">wijt</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Dijn deugt, met stem van lof end <rhyme label="b" type="m">danck</rhyme>:</l>
        <l id="s7:l4" met="3" type="-+">End al dijn <rhyme label="c" type="f">wonderwercken</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Die alle man mach <rhyme label="c" type="f" corresp="#s7:l4">mercken</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Vertellen in mijn <rhyme label="b" type="m" corresp="#s7:l3">lofgesanck</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Ick heb van herten <rhyme label="a" type="m">lief</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Dijns heylgen huys <rhyme label="a" type="m" corresp="#s8:l1">gerief</rhyme>:</l>
        <l id="s8:l3" met="4" type="-+">Daer du dy aen ons <rhyme label="b" type="m">openbaerst</rhyme>.</l>
        <l id="s8:l4" met="3" type="-+">End houd' van grooter <rhyme label="c" type="f">weirden</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Dijn woonstat hier op <rhyme label="c" type="f" corresp="#s8:l4">eirden</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Daer du dijn heerlickheyt <rhyme label="b" type="m" corresp="#s8:l3">verklaerst</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Heer, laet doch inden <rhyme label="a" type="m">loop</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Der sondaers, metten <rhyme label="a" type="m" corresp="#s9:l1">hoop</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Mijn siel niet werden <rhyme label="b" type="m">opgeraept</rhyme>:</l>
        <l id="s9:l4" met="3" type="-+">Gedoog niet dat mijn <rhyme label="c" type="f">leven</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Met lien die haer <rhyme label="c" type="f" corresp="#s9:l4">begeven</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Tot bloetvergieten, werd <rhyme label="b" type="m" corresp="#s9:l3">betraept</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Der welcker schalcke <rhyme label="a" type="m">handt</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Na quade perten <rhyme label="a" type="m" corresp="#s10:l1">brant</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Die hun het hert altijt <rhyme label="b" type="m">bedenckt</rhyme>.</l>
        <l id="s10:l4" met="3" type="-+">End haer vuyst wort <rhyme label="c" type="f">bestreken</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">End d'oogen <rhyme label="c" type="f" corresp="#s10:l4">uytgesteken</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Met giften, die elck een hun <rhyme label="b" type="m" corresp="#s10:l3">schenckt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Maer ick wil my <rhyme label="a" type="m">altoos</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Afhouden van het <rhyme label="a" type="m" corresp="#s11:l1">boos</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">End steets met vroimheyt <rhyme label="b" type="m">ommegaen</rhyme>.</l>
        <l id="s11:l4" met="3" type="-+">Verloss my vanden <rhyme label="c" type="f">quade</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">O Heer, doe my <rhyme label="c" type="f" corresp="#s11:l4">genade</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">End neem my in dijn schutting <rhyme label="b" type="m" corresp="#s11:l3">aen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Dewijl mijn voeten <rhyme label="a" type="m">staen</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Wel vast op d'effen <rhyme label="a" type="m" corresp="#s12:l1">baen</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Versekert end uyt allen <rhyme label="b" type="m">noot</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">So wil ick God den <rhyme label="c" type="f">Heere</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">Oock bieden lof end <rhyme label="c" type="f" corresp="#s12:l4">eere</rhyme>,</l>
        <l id="s12:l6" met="4" type="-+">In svolcks vergaderingen <rhyme label="b" type="m" corresp="#s12:l3">groot</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

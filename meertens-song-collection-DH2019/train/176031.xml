  <author>Jacobus Revius</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">WIlt acht op mijne stemme <rhyme label="a" type="f">geven</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">O Heere, in dit swaer <rhyme label="b" type="m">gequel</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">En my op vrije voeten <rhyme label="b" type="m" corresp="#s1:l2">stel</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Voor mijnen vyant hoedt mijn <rhyme label="a" type="f" corresp="#s1:l1">leven</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Die my doet <rhyme label="a" type="f" corresp="#s1:l1">beven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Verberget my doch voor de <rhyme label="a" type="f">lagen</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Der boose-wichten slim en <rhyme label="b" type="m">vals</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Die tegen my met veel <rhyme label="b" type="m" corresp="#s2:l2">geschals</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Tesamen rotten, en raet <rhyme label="a" type="f" corresp="#s2:l1">slagen</rhyme></l>
        <l id="s2:l5" met="2" type="-+">Mijn ziel te <rhyme label="a" type="f" corresp="#s2:l1">plagen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Sy hebben tongen, diese <rhyme label="a" type="f">wetten</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Gelijck een sweert tot wreede <rhyme label="b" type="m">moort</rhyme>.</l>
        <l id="s3:l3" met="4" type="-+">Gelijck een pijl doorsnijt haer <rhyme label="b" type="m" corresp="#s3:l2">woort</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Twelck om de vrome te <rhyme label="a" type="f" corresp="#s3:l1">verpletten</rhyme></l>
        <l id="s3:l5" met="2" type="-+">Sy veerdich <rhyme label="a" type="f" corresp="#s3:l1">setten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Op datse mogen int <rhyme label="a" type="f">verborgen</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Doorschieten den oprechten <rhyme label="b" type="m">man</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Die heefter angst en vreese <rhyme label="b" type="m" corresp="#s4:l2">van</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Als sy, hem pogende te <rhyme label="a" type="f" corresp="#s4:l1">worgen</rhyme></l>
        <l id="s4:l5" met="2" type="-+">Voor niemant <rhyme label="a" type="f" corresp="#s4:l1">sorgen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Haer selven sy moetwillich <rhyme label="a" type="f">stercken</rhyme></l>
        <l id="s5:l2" met="4" type="-+">In hare rancken schalck en <rhyme label="b" type="m">boos</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Sy bergen hare stricken <rhyme label="b" type="m" corresp="#s5:l2">loos</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">En seggen:wie sal onse <rhyme label="a" type="f" corresp="#s5:l1">wercken</rhyme></l>
        <l id="s5:l5" met="2" type="-+">Doch connen <rhyme label="a" type="f" corresp="#s5:l1">mercken</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Sy ondersoecken diepe <rhyme label="a" type="f">vonden</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Arbeydende te zijn <rhyme label="b" type="m">gewis</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Van al wat na te speuren <rhyme label="b" type="m" corresp="#s6:l2">is</rhyme>.</l>
        <l id="s6:l4" met="4" type="-+">Ia souden 'smenschen hert <rhyme label="a" type="f" corresp="#s6:l1">doorgronden</rhyme></l>
        <l id="s6:l5" met="2" type="-+">Indiense <rhyme label="a" type="f" corresp="#s6:l1">conden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Maer God, na wiense weynich <rhyme label="a" type="f">vragen</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Eer sy het dencken, sal in <rhyme label="b" type="m">yl</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Op haer afschieten synen <rhyme label="b" type="m" corresp="#s7:l2">pijl</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">En haer de welverdiende <rhyme label="a" type="f" corresp="#s7:l1">plagen</rhyme></l>
        <l id="s7:l5" met="2" type="-+">Te huys doen <rhyme label="a" type="f" corresp="#s7:l1">dragen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Haer eygen tong' sal <rhyme label="a" type="f">haestelijcken</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Haer brengen tot een harden <rhyme label="b" type="m">val</rhyme>.</l>
        <l id="s8:l3" met="4" type="-+">Een yder diese siet, die <rhyme label="b" type="m" corresp="#s8:l2">sal</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Verbaest en bevende gaen <rhyme label="a" type="f" corresp="#s8:l1">strijcken</rhyme></l>
        <l id="s8:l5" met="2" type="-+">En van haer <rhyme label="a" type="f" corresp="#s8:l1">wijcken</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Dan sullen alle menschen <rhyme label="a" type="f">achten</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Op 't wonderwerck van onsen <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Oock luytbaer maken syne <rhyme label="b" type="m" corresp="#s9:l2">eer</rhyme>.</l>
        <l id="s9:l4" met="4" type="-+">En merckende op syne <rhyme label="a" type="f" corresp="#s9:l1">crachten</rhyme></l>
        <l id="s9:l5" met="2" type="-+">Na wijsheyt <rhyme label="a" type="f" corresp="#s9:l1">trachten</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">d'Oprechte sullen troost <rhyme label="a" type="f">becomen</rhyme></l>
        <l id="s10:l2" met="4" type="-+">In God haer helper uyt den <rhyme label="b" type="m">noot</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">En hem betrouwen totter <rhyme label="b" type="m" corresp="#s10:l2">doot</rhyme>.</l>
        <l id="s10:l4" met="4" type="-+">Syn name salmen hooren <rhyme label="a" type="f" corresp="#s10:l1">romen</rhyme></l>
        <l id="s10:l5" met="2" type="-+">Van alle <rhyme label="a" type="f" corresp="#s10:l1">vromen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <author>Guilelmus van der Borcht</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">NAer dat nu 't <rhyme label="a" type="m">Minnen-kindt</rhyme></l>
        <l id="s1:l2" met="3" type="-+">(Bedroghen en <rhyme label="a" type="m" corresp="#s1:l1">mis-sint</rhyme>)</l>
        <l id="s1:l3" met="4" type="-+">Van my eerst was gheloopen <rhyme label="b" type="m">voordt</rhyme>,</l>
        <l id="s1:l4" met="5" type="-+">Soo quam hy gevlogen ‘getoghen <rhyme label="c" type="m">om-hoogh</rhyme>,</l>
        <l id="s1:l5" met="1" type="-+">VVt <rhyme label="c" type="m" corresp="#s1:l4">d'oogh</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Op my verbittert en <rhyme label="b" type="m" corresp="#s1:l3">verstoort</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Doen hy schier was <rhyme label="a" type="m">beneed'</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Riep hy: maeckt u <rhyme label="a" type="m" corresp="#s2:l1">bereedt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">VVant ghy moet proeven van mijn <rhyme label="b" type="m">gheweldt</rhyme>;</l>
        <l id="s2:l4" met="5" type="-+">Met quam ick te rapen ‘tot wapen een <rhyme label="c" type="m">boeck</rhyme></l>
        <l id="s2:l5" met="1" type="-+">En <rhyme label="c" type="m" corresp="#s2:l4">kloeck</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Hebb' ick my soo te weir' <rhyme label="b" type="m" corresp="#s2:l3">ghestelt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Doen sloegh sijn wacker <rhyme label="a" type="m">boogh</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">En hy schoot van <rhyme label="a" type="m" corresp="#s3:l1">om-hoogh</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Tot my een' over-gulden <rhyme label="b" type="m">schicht</rhyme>,</l>
        <l id="s3:l4" met="5" type="-+">Maer ick met het leeren ‘kost keeren den <rhyme label="c" type="m">pijl</rhyme>,</l>
        <l id="s3:l5" met="1" type="-+">Ter <rhyme label="c" type="m" corresp="#s3:l4">wijl'</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Riep hy my toe met dweersch <rhyme label="b" type="m" corresp="#s3:l3">ghesicht</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Laet studie-vrindt ey ! <rhyme label="a" type="m">laet</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">VVant sy en gheeft gheen <rhyme label="a" type="m" corresp="#s4:l1">baet</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">'t Is doch om niet wat ghy <rhyme label="b" type="m">betracht</rhyme>,</l>
        <l id="s4:l4" met="5" type="-+">Mijn schichten door-gronden ‘en wonden het <rhyme label="c" type="m">hert'</rhyme>,</l>
        <l id="s4:l5" met="1" type="-+">Met <rhyme label="c" type="m" corresp="#s4:l4">smert'</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">En wat gheweir weêr-stondt mijn <rhyme label="b" type="m" corresp="#s4:l3">kracht</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">O liefd' ghy zijt in <rhyme label="a" type="m">dut</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">(Riep ick) siet mijn <rhyme label="a" type="m" corresp="#s5:l1">beschut</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Dus veracht ick all' u <rhyme label="b" type="m">gheweldt</rhyme>;</l>
        <l id="s5:l4" met="5" type="-+">Doen vloogh hy met schanden ‘al branden, den <rhyme label="c" type="m">spijt</rhyme>,</l>
        <l id="s5:l5" met="1" type="-+">Ter <rhyme label="c" type="m" corresp="#s5:l4">tijdt</rhyme>;</l>
        <l id="s5:l6" met="4" type="-+">Sijn hert' dat hem seer vinnigh <rhyme label="b" type="m" corresp="#s5:l3">quelt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Dus wie de studie <rhyme label="a" type="m">mindt</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Oft schoon het <rhyme label="a" type="m" corresp="#s6:l1">Minnen-Kindt</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Hem sijnen heeten schicht <rhyme label="b" type="m">bereydt</rhyme>,</l>
        <l id="s6:l4" met="5" type="-+">Kan liefde verjaghen ‘en plagen het <rhyme label="c" type="m">VVicht</rhyme>,</l>
        <l id="s6:l5" met="1" type="-+">Seer <rhyme label="c" type="m" corresp="#s6:l4">licht</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Met op-ghekropte <rhyme label="b" type="m" corresp="#s6:l3">bitterheydt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

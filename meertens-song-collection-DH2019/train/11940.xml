  <author>Cornelis de Leeuw</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DIe Dronckaarts zijn, die Wijn of <rhyme label="a" type="m">Bier</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Niet tot ghesontheydt, maar <rhyme label="a" type="m" corresp="#s1:l1">playsier</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Noch voor den dorst <rhyme label="b" type="f">ghebruycken</rhyme>.</l>
        <l id="s1:l4" met="4" type="-+">Die boven macht en boven <rhyme label="c" type="m">staadt</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Koopt kost'le dranck, en daar me'e <rhyme label="c" type="m" corresp="#s1:l4">laadt</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Sijn buyck met volle <rhyme label="b" type="f" corresp="#s1:l3">kruycken</rhyme>.</l>
        <l id="s1:l7" met="4" type="-+">Die wijn van Wijnen <rhyme label="d" type="m">onderscheyt</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">En die met Kruyden <rhyme label="d" type="m" corresp="#s1:l7">toe-bereydt</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Niet om het Lijff te <rhyme label="e" type="f">stercken</rhyme>;</l>
        <l id="s1:l10" met="4" type="-+">Maar om te swelghen meerder <rhyme label="f" type="m">Wijn</rhyme>,</l>
        <l id="s1:l11" met="4" type="+-">En om door dese sterck te <rhyme label="f" type="m" corresp="#s1:l10">sijn</rhyme></l>
        <l id="s1:l12" met="3" type="-+">Tot vleeschelijcke <rhyme label="e" type="f" corresp="#s1:l9">wercken</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Die even als een gulsigh <rhyme label="a" type="m">Beest</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Haar vollen op, op 't <rhyme label="a" type="m" corresp="#s2:l1">allermeest</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Met halven en met <rhyme label="b" type="f">heelen</rhyme>;</l>
        <l id="s2:l4" met="4" type="-+">Als of het leven om den <rhyme label="c" type="m">dranck</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Ghegheven was, en niet om <rhyme label="c" type="m" corresp="#s2:l4">danck</rhyme></l>
        <l id="s2:l6" met="3" type="-+">En lof ons Godt te <rhyme label="b" type="f" corresp="#s2:l3">speelen</rhyme>.</l>
        <l id="s2:l7" met="4" type="-+">Die (schoon dat ons het Hemelsch <rhyme label="d" type="m">Hoff</rhyme></l>
        <l id="s2:l8" met="4" type="-+">Noyt gheeft tot dronckenschap <rhyme label="d" type="m" corresp="#s2:l7">verloff</rhyme>)</l>
        <l id="s2:l9" met="3" type="-+">Op onbequame <rhyme label="e" type="f">stonden</rhyme>,</l>
        <l id="s2:l10" met="4" type="-+">(Als wy ons Heylant roepen <rhyme label="f" type="m">aan</rhyme>,</l>
        <l id="s2:l11" met="4" type="+-">Of als hy ons met ramp koomt <rhyme label="f" type="m" corresp="#s2:l10">slaan</rhyme>)</l>
        <l id="s2:l12" met="3" type="-+">In 't Drinck-Huys sijn <rhyme label="e" type="f" corresp="#s2:l9">ghevonden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Of ghy met voorbedachten <rhyme label="a" type="m">raat</rhyme></l>
        <l id="s3:l2" met="4" type="-+">U in het drincken niet <rhyme label="a" type="m" corresp="#s3:l1">misgaadt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Dat sal u niet <rhyme label="b" type="f">verschoonen</rhyme>;</l>
        <l id="s3:l4" met="4" type="-+">Soo achteloosheyt en <rhyme label="c" type="m">versuym</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Dit quaat jae aller sonden <rhyme label="c" type="m" corresp="#s3:l4">schuym</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Laat in u siele <rhyme label="b" type="f" corresp="#s3:l3">woonen</rhyme>.</l>
        <l id="s3:l7" met="4" type="-+">Dan achteloosheyt schuldigh <rhyme label="d" type="m">maackt</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">Wanneermen kan, doch niet en <rhyme label="d" type="m" corresp="#s3:l7">wraackt</rhyme></l>
        <l id="s3:l9" met="3" type="-+">Gheleghentheyt tot <rhyme label="e" type="f">Suypen</rhyme>:</l>
        <l id="s3:l10" met="4" type="-+">Of alsmen niet daarom en <rhyme label="f" type="m">gheeft</rhyme>,</l>
        <l id="s3:l11" met="4" type="+-">Of ons de Wijn bevanghen <rhyme label="f" type="m" corresp="#s3:l10">heeft</rhyme>,</l>
        <l id="s3:l12" met="3" type="-+">En voortbrenght vreemde <rhyme label="e" type="f" corresp="#s3:l9">stuypen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Of ghy veel Wijns verstouwen <rhyme label="a" type="m">meucht</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Ghy echter niet van die <rhyme label="a" type="m" corresp="#s4:l1">ondeucht</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Vry zijt, in dien u <rhyme label="b" type="f">sinnen</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Sijn op den dranck geheel <rhyme label="c" type="m">versot</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">En het gheselschap als u <rhyme label="c" type="m" corresp="#s4:l4">Godt</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Of boven hem <rhyme label="b" type="f" corresp="#s4:l3">beminnen</rhyme>.</l>
        <l id="s4:l7" met="4" type="-+">In dien u Tongh maar Iser <rhyme label="d" type="m">slaat</rhyme>,</l>
        <l id="s4:l8" met="4" type="-+">(In dien het uyt den dranck <rhyme label="d" type="m" corresp="#s4:l7">ontstaat</rhyme>)</l>
        <l id="s4:l9" met="3" type="-+">Soo doet ghy mede <rhyme label="e" type="f">sonden</rhyme>:</l>
        <l id="s4:l10" met="4" type="-+">Dewijle dat ghy <rhyme label="f" type="m">onbequaam</rhyme></l>
        <l id="s4:l11" met="4" type="+-">Om aan te bidden 's Heeren <rhyme label="f" type="m" corresp="#s4:l10">naam</rhyme></l>
        <l id="s4:l12" met="3" type="-+">Van Gode wert <rhyme label="e" type="f" corresp="#s4:l9">bevonden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Al wie dat onder vrientschaps <rhyme label="a" type="m">schijn</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Op-vult sijn even-mensch met <rhyme label="a" type="m" corresp="#s5:l1">Wijn</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">En hem soo maackt <rhyme label="b" type="f">beschoncken</rhyme>:</l>
        <l id="s5:l4" met="4" type="-+">Schoon dat hy nucht'ren blijft, doet <rhyme label="c" type="m">quaat</rhyme>;</l>
        <l id="s5:l5" met="4" type="-+">En staat by Godt in eenen <rhyme label="c" type="m" corresp="#s5:l4">graat</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Met dien hy maackte <rhyme label="b" type="f" corresp="#s5:l3">Droncken</rhyme>.</l>
        <l id="s5:l7" met="4" type="-+">Treft hem Gods straff, die ymant <rhyme label="d" type="m">gheeft</rhyme></l>
        <l id="s5:l8" met="4" type="-+">Een oorsaack, dat hy qualijck <rhyme label="d" type="m" corresp="#s5:l7">leeft</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">Veel meer, die hem <rhyme label="e" type="f">aanraden</rhyme>,</l>
        <l id="s5:l10" met="4" type="-+">Het sy door voorbedachten <rhyme label="f" type="m">raat</rhyme>,</l>
        <l id="s5:l11" met="4" type="+-">Of door omweghen, dat hy <rhyme label="f" type="m" corresp="#s5:l10">gaat</rhyme></l>
        <l id="s5:l12" met="3" type="-+">On-Goddelijcke <rhyme label="e" type="f" corresp="#s5:l9">paden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Door Dronckenschap ons Godt <rhyme label="a" type="m">ontseyt</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Alleenigh niet de <rhyme label="a" type="m" corresp="#s6:l1">voghtigheyt</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Maar oock alsulcke <rhyme label="b" type="f">saacken</rhyme>;</l>
        <l id="s6:l4" met="4" type="-+">Die schoon sy droogh sijn, niet te <rhyme label="c" type="m">min</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Door sterck ghebruyck ons hert en <rhyme label="c" type="m" corresp="#s6:l4">sin</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Tot bidden slap'righ <rhyme label="b" type="f" corresp="#s6:l3">maacken</rhyme>.</l>
        <l id="s6:l7" met="4" type="-+">Drinck middelen hy oock <rhyme label="d" type="m">verbiet</rhyme>;</l>
        <l id="s6:l8" met="4" type="-+">Oock wil hy datmen neerstigh <rhyme label="d" type="m" corresp="#s6:l7">vliet</rhyme></l>
        <l id="s6:l9" met="3" type="-+">Al die <rhyme label="e" type="f">gheleghentheden</rhyme></l>
        <l id="s6:l10" met="4" type="-+">Waar door het licht ghebeuren <rhyme label="f" type="m">kan</rhyme>,</l>
        <l id="s6:l11" met="4" type="+-">Dat wy ons selven nu off <rhyme label="f" type="m" corresp="#s6:l10">dan</rhyme></l>
        <l id="s6:l12" met="3" type="-+">Tot dronckenschap <rhyme label="e" type="f" corresp="#s6:l9">besteden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

    <melody>O bloeiende jeugd notabel wijs van zinnen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">BEpeynst ende <rhyme label="a" type="m">beseft</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Ghy edel Christen <rhyme label="b" type="f">siele</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Dat ghy altijt <rhyme label="a" type="m" corresp="#s1:l1">verheft</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Al in des werelts <rhyme label="b" type="f" corresp="#s1:l2">wiele</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Den Prince van uwer <rhyme label="c" type="m">salicheyt</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Die tot v coemt so Zacharias <rhyme label="c" type="m" corresp="#s1:l5">seyt</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Ootmoedich in allen <rhyme label="d" type="f">saken</rhyme></l>
        <l id="s1:l8" met="4" type="-+">Om voor ons te strijden is hy <rhyme label="c" type="m" corresp="#s1:l5">bereyt</rhyme></l>
        <l id="s1:l9" met="4" type="-+">Eewich blijft den stoel zijnder <rhyme label="c" type="m" corresp="#s1:l5">Maiesteyt</rhyme></l>
        <l id="s1:l10" met="3" type="-+">Wilt vroech al om hem <rhyme label="d" type="f" corresp="#s1:l7">waken</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Hy wilt in alder <rhyme label="a" type="m">stont</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Om ons te helpen <rhyme label="b" type="f">pooghen</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Sijn oordeel en <rhyme label="a" type="m" corresp="#s2:l1">verbont</rhyme></l>
        <l id="s2:l4" met="3" type="-+">En machmen niet <rhyme label="b" type="f" corresp="#s2:l2">verdroogen</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Hy en wilt de doot der sondaren <rhyme label="c" type="m">niet</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Maer dat hy hem keere, so ons scriftuer <rhyme label="c" type="m" corresp="#s2:l5">bediet</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Tot hem, van zijnen <rhyme label="d" type="f">weghe</rhyme></l>
        <l id="s2:l8" met="4" type="-+">Want den geueynsden naket groot <rhyme label="c" type="m" corresp="#s2:l5">verdriet</rhyme></l>
        <l id="s2:l9" met="4" type="-+">Den nederen helpt hy wt den stoffe <rhyme label="c" type="m" corresp="#s2:l5">siet</rhyme></l>
        <l id="s2:l10" met="3" type="-+">Twaer scha datment <rhyme label="d" type="f" corresp="#s2:l7">versweghe</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Siet ick ben de Heere v <rhyme label="a" type="m">God</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Uan allen vleessche <rhyme label="b" type="f">coene</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Mach my yet int <rhyme label="a" type="m" corresp="#s3:l1">slot</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Te swaer zijn te <rhyme label="b" type="f" corresp="#s3:l2">doene</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Ick wil v vergheuen v boosheyt <rhyme label="c" type="m">obstinaet</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Keerdy tot my, en v leuen <rhyme label="c" type="m" corresp="#s3:l5">afgaet</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Dit spreect die Heere der <rhyme label="d" type="f">Heeren</rhyme></l>
        <l id="s3:l8" met="4" type="-+">Belijdy v sonden, so en werdy niet <rhyme label="c" type="m" corresp="#s3:l5">versmaet</rhyme></l>
        <l id="s3:l9" met="4" type="-+">Ghy wert metten wijn der salicheyt <rhyme label="c" type="m" corresp="#s3:l5">versaet</rhyme></l>
        <l id="s3:l10" met="3" type="-+">Wildy tot my <rhyme label="d" type="f" corresp="#s3:l7">bekeeren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Roept nv met <rhyme label="a" type="m">Israel</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Heere God aenhoort mijn <rhyme label="b" type="f">bede</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Opent ons seer <rhyme label="a" type="m" corresp="#s4:l1">snel</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Die fonteyne die haer toe <rhyme label="b" type="f" corresp="#s4:l2">dede</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Door Adams ouertreden seer <rhyme label="c" type="m">boos</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Doen de liefde Gods in hem <rhyme label="c" type="m" corresp="#s4:l5">veruroos</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Opent weder die <rhyme label="d" type="f">conduyten</rhyme></l>
        <l id="s4:l8" met="4" type="-+">Uan uwer ghenaden die ons eens <rhyme label="c" type="m" corresp="#s4:l5">vercoos</rhyme></l>
        <l id="s4:l9" met="4" type="-+">Wilt doch dijn cracht ouer mijn menscheyt <rhyme label="c" type="m" corresp="#s4:l5">broos</rhyme></l>
        <l id="s4:l10" met="3" type="-+">In deser tijt <rhyme label="d" type="f" corresp="#s4:l7">ontsluyten</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Prince wilt <rhyme label="a" type="m">ontfaen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">My in v gracie <rhyme label="b" type="f">puere</rhyme></l>
        <l id="s5:l3" met="3" type="-+">En wilt doch niet <rhyme label="a" type="m" corresp="#s5:l1">versmaen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">U selfs <rhyme label="b" type="f" corresp="#s5:l2">creatuere</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Al ben ick door mijn sonden <rhyme label="c" type="m">verneert</rhyme></l>
        <l id="s5:l6" met="4" type="-+">Door uwen naem seer <rhyme label="c" type="m" corresp="#s5:l5">gheapprobeert</rhyme></l>
        <l id="s5:l7" met="3" type="-+">So wilt my wederom <rhyme label="d" type="f">ghenesen</rhyme></l>
        <l id="s5:l8" met="4" type="-+">Al heb ick v gheboden seer <rhyme label="c" type="m" corresp="#s5:l5">gheuioleert</rhyme></l>
        <l id="s5:l9" met="4" type="-+">Door v barmherticheyt <rhyme label="c" type="m" corresp="#s5:l5">gheexalteert</rhyme></l>
        <l id="s5:l10" met="3" type="-+">Uerlost my Heere <rhyme label="d" type="f" corresp="#s5:l7">ghepresen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

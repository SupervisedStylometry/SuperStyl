  <author>C. J. Wits</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">CHristelijcke <rhyme label="a" type="f">Jongelinghen</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Rechte Minnaers van de <rhyme label="b" type="m">Deucht</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Dien met aendachtigh <rhyme label="a" type="f" corresp="#s1:l1">singhen</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Sticht'lijck in den Heer <rhyme label="b" type="m" corresp="#s1:l2">verheucht</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Soeckt hier toe bequame <rhyme label="c" type="m">stof</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Die u sticht tot Godes <rhyme label="c" type="m" corresp="#s1:l5">lof</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Kan de Rijm-konst u <rhyme label="a" type="f">vermaecken</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Hebt ghy in haer soetheyt <rhyme label="b" type="m">smaeck</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Daer kondt ghy wel <rhyme label="a" type="f" corresp="#s2:l1">aengeraecken</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Die u dient tot reyn <rhyme label="b" type="m" corresp="#s2:l2">vermaeck</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Schouwt Commedis, geyl <rhyme label="c" type="m">ghedicht</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Die een reyne Ziel <rhyme label="c" type="m" corresp="#s2:l5">ontsticht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Blinde Heydens <rhyme label="a" type="f">onghebonden</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Dertel volck en geyl van <rhyme label="b" type="m">aert</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Hebben eerst dit Spel <rhyme label="a" type="f" corresp="#s3:l1">ghevonden</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Dit Kindt is van haer <rhyme label="b" type="m" corresp="#s3:l2">ghebaert</rhyme>:</l>
        <l id="s3:l5" met="4" type="+-">Maer haer Wijsen hoogh <rhyme label="c" type="m">gheacht</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Laeckten altijdt dit <rhyme label="c" type="m" corresp="#s3:l5">gheslacht</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Kan 't een Christen oyt <rhyme label="a" type="f">betamen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Dat hem in de <rhyme label="b" type="m">eerbaerheyt</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Het blinde Volck sal <rhyme label="a" type="f" corresp="#s4:l1">beschamen</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Munten uyt in <rhyme label="b" type="m" corresp="#s4:l2">stadigheyt</rhyme> ?</l>
        <l id="s4:l5" met="4" type="+-">Neen: Gods gunst ons meer <rhyme label="c" type="m">verplicht</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Voor ons schijnt het heyligh <rhyme label="c" type="m" corresp="#s4:l5">Licht</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Gods ghenaed' is ons <rhyme label="a" type="f">verscheenen</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Om te wand'len <rhyme label="b" type="m">eerbaerlijck</rhyme></l>
        <l id="s5:l3" met="4" type="+-">In den daghe, boven <rhyme label="a" type="f" corresp="#s5:l1">ghenen</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Die noch zyn in 't duyster <rhyme label="b" type="m" corresp="#s5:l2">Rijck</rhyme>:</l>
        <l id="s5:l5" met="4" type="+-">Want 't is re'en, dat Christi <rhyme label="c" type="m">Bruyt</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Moet voor and're steken <rhyme label="c" type="m" corresp="#s5:l5">uyt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Schoon sy gaen de stoffe <rhyme label="a" type="f">nemen</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Uyt des Heeren reyne <rhyme label="b" type="m">Woordt</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">En daer uyt (alsoo sy <rhyme label="a" type="f" corresp="#s6:l1">meenen</rhyme>)</l>
        <l id="s6:l4" met="4" type="+-">Brenghen goede stichtingh <rhyme label="b" type="m" corresp="#s6:l2">voort</rhyme>.</l>
        <l id="s6:l5" met="4" type="+-">Yd'le Mensch, 't is al om <rhyme label="c" type="m">niet</rhyme>:</l>
        <l id="s6:l6" met="4" type="+-">Want den Heere dit <rhyme label="c" type="m" corresp="#s6:l5">verbiedt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Och ! dit speelen mach niet <rhyme label="a" type="f">wesen</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Ghy misbruyckt des Heeren <rhyme label="b" type="m">Woordt</rhyme>.</l>
        <l id="s7:l3" met="4" type="+-">Godt wil dat wy daer voor <rhyme label="a" type="f" corresp="#s7:l1">vreesen</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">En werdt over dien <rhyme label="b" type="m" corresp="#s7:l2">verstoort</rhyme></l>
        <l id="s7:l5" met="4" type="+-">Die sijn Woordt neemt in den <rhyme label="c" type="m">mondt</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">En is vuyl in 's herten <rhyme label="c" type="m" corresp="#s7:l5">grondt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Nemen sy nu and're <rhyme label="a" type="f">saecken</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Tot haer stof uyt 's Werelts <rhyme label="b" type="m">loop</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Sal dit dienen tot <rhyme label="a" type="f" corresp="#s8:l1">vermaecken</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Van al den ghemeenen <rhyme label="b" type="m" corresp="#s8:l2">hoop</rhyme> ?</l>
        <l id="s8:l5" met="4" type="+-">'t Werdt met sotterny <rhyme label="c" type="m">door-speckt</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Die een reyne Ziel <rhyme label="c" type="m" corresp="#s8:l5">bevleckt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Komen sy de stof <rhyme label="a" type="f">t'ontleenen</rhyme></l>
        <l id="s9:l2" met="4" type="+-">Van een Heydensen <rhyme label="b" type="m">PoeÃ«t</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Men sal vinden dat die <rhyme label="a" type="f" corresp="#s9:l1">ghene</rhyme></l>
        <l id="s9:l4" met="4" type="+-">Dertelheyt daer onder <rhyme label="b" type="m" corresp="#s9:l2">smeedt</rhyme>,</l>
        <l id="s9:l5" met="4" type="+-">Boven dat soo komt daer <rhyme label="c" type="m">by</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">De vervloeckt' <rhyme label="c" type="m" corresp="#s9:l5">Afgodery</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Gheen van Christi reyne <rhyme label="a" type="f">leden</rhyme></l>
        <l id="s10:l2" met="4" type="+-">Dit in 't minste niet <rhyme label="b" type="m">betaemt</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Oock en moet (na Paulus <rhyme label="a" type="f" corresp="#s10:l1">reden</rhyme>)</l>
        <l id="s10:l4" met="4" type="+-">Van ons niet en zyn <rhyme label="b" type="m" corresp="#s10:l2">ghenaemt</rhyme>,</l>
        <l id="s10:l5" met="4" type="+-">Maer behoorelijck <rhyme label="c" type="m">ghestraft</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">En ten vollen <rhyme label="c" type="m" corresp="#s10:l5">af-geschaft</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Oock soo is het buyten <rhyme label="a" type="f">reden</rhyme></l>
        <l id="s11:l2" met="4" type="+-">Dat dit Volckjen <rhyme label="b" type="m">ongeacht</rhyme>,</l>
        <l id="s11:l3" met="4" type="+-">Vaeck verwiss'len hare <rhyme label="a" type="f" corresp="#s11:l1">Kleeden</rhyme>,</l>
        <l id="s11:l4" met="4" type="+-">Mannen nemen Vrouwen <rhyme label="b" type="m" corresp="#s11:l2">dracht</rhyme>,</l>
        <l id="s11:l5" met="4" type="+-">Tegen 't heyl'ghe <rhyme label="c" type="m">Gebodt</rhyme></l>
        <l id="s11:l6" met="4" type="+-">Van den Heere <rhyme label="c" type="m" corresp="#s11:l5">Zebaoth</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">'t Loon daer veele om gaen <rhyme label="a" type="f">speelen</rhyme></l>
        <l id="s12:l2" met="4" type="+-">Is een winst van yd'le <rhyme label="b" type="m">eer</rhyme>:</l>
        <l id="s12:l3" met="4" type="+-">Gulsigheyt, en dertel <rhyme label="a" type="f" corresp="#s12:l1">queelen</rhyme>,</l>
        <l id="s12:l4" met="4" type="+-">And're beuselinghen <rhyme label="b" type="m" corresp="#s12:l2">meer</rhyme>.</l>
        <l id="s12:l5" met="4" type="+-">Kort om, de geheele <rhyme label="c" type="m">saeck</rhyme></l>
        <l id="s12:l6" met="4" type="+-">Is een vleesschelijck <rhyme label="c" type="m" corresp="#s12:l5">vermaeck</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Speelers, en die 't gaen <rhyme label="a" type="f">aenschouwen</rhyme>,</l>
        <l id="s13:l2" met="4" type="+-">Souden dan niet, in dien <rhyme label="b" type="m">staet</rhyme>,</l>
        <l id="s13:l3" met="4" type="+-">Willen dat den Heere <rhyme label="a" type="f" corresp="#s13:l1">soude</rhyme></l>
        <l id="s13:l4" met="4" type="+-">Snijden af haer levens <rhyme label="b" type="m" corresp="#s13:l2">draedt</rhyme>,</l>
        <l id="s13:l5" met="4" type="+-">Die daer reeckenschap <rhyme label="c" type="m">begheert</rhyme></l>
        <l id="s13:l6" met="4" type="+-">Of sijn Naem soo werdt <rhyme label="c" type="m" corresp="#s13:l5">ge-eert</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">Niemant mach een dinck <rhyme label="a" type="f">na-trachten</rhyme></l>
        <l id="s14:l2" met="4" type="+-">Daer in dat hy <rhyme label="b" type="m">ongherust</rhyme></l>
        <l id="s14:l3" met="4" type="+-">Doodt, en Oordeel soud' <rhyme label="a" type="f" corresp="#s14:l1">verwachten</rhyme>.</l>
        <l id="s14:l4" met="4" type="+-">Wech van prijckeloose <rhyme label="b" type="m" corresp="#s14:l2">lust</rhyme>.</l>
        <l id="s14:l5" met="4" type="+-">Soete Jeucht, na vreuchde <rhyme label="c" type="m">jaeght</rhyme>,</l>
        <l id="s14:l6" met="4" type="+-">Die u sticht, en Godt <rhyme label="c" type="m" corresp="#s14:l5">behaeght</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="+-">Godt die dreyght u toe te <rhyme label="a" type="f">komen</rhyme></l>
        <l id="s15:l2" met="4" type="+-">Als een Dief komt in der <rhyme label="b" type="m">nacht</rhyme>.</l>
        <l id="s15:l3" met="4" type="+-">Och ! de Mensch die mach wel <rhyme label="a" type="f" corresp="#s15:l1">schromen</rhyme></l>
        <l id="s15:l4" met="4" type="+-">Die Godt toe-komt <rhyme label="b" type="m" corresp="#s15:l2">onverwacht</rhyme>,</l>
        <l id="s15:l5" met="4" type="+-">Denckt, wie na den vleessche <rhyme label="c" type="m">leeft</rhyme></l>
        <l id="s15:l6" met="4" type="+-">In Gods Rijck gheen deel en <rhyme label="c" type="m" corresp="#s15:l5">heeft</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="+-">Veel vermaerde <rhyme label="a" type="f">Gods-gheleerde</rhyme></l>
        <l id="s16:l2" met="4" type="+-">Al van Oude tijden <rhyme label="b" type="m">aen</rhyme>,</l>
        <l id="s16:l3" met="4" type="+-">Hielden 't Speelen van gheen <rhyme label="a" type="f" corresp="#s16:l1">weerden</rhyme>,</l>
        <l id="s16:l4" met="4" type="+-">Maer sy hebben 't <rhyme label="b" type="m" corresp="#s16:l2">teghen-staen</rhyme>.</l>
        <l id="s16:l5" met="4" type="+-">Heden-daeghs werdt dit <rhyme label="c" type="m">gheslacht</rhyme></l>
        <l id="s16:l6" met="4" type="+-">Van Godts Dienaers me'e <rhyme label="c" type="m" corresp="#s16:l5">veracht</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="+-">Let hier op, verdwaelde <rhyme label="a" type="f">sinnen</rhyme>,</l>
        <l id="s17:l2" met="4" type="+-">'t Mach met reden niet <rhyme label="b" type="m">bestaen</rhyme>,</l>
        <l id="s17:l3" met="4" type="+-">Dat die gheen die Godt <rhyme label="a" type="f" corresp="#s17:l1">beminnen</rhyme></l>
        <l id="s17:l4" met="4" type="+-">Souden Speelen, of daer <rhyme label="b" type="m" corresp="#s17:l2">gaen</rhyme>.</l>
        <l id="s17:l5" met="4" type="+-">Och ! ick heb'se me'e <rhyme label="c" type="m">bemint</rhyme>,</l>
        <l id="s17:l6" met="4" type="+-">Maer ben anders nu <rhyme label="c" type="m" corresp="#s17:l5">ghesint</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

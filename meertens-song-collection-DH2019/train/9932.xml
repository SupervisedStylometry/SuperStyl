  <author>Karel van Mander</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ICk wil nu gaen <rhyme label="a" type="f">verhalen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Al van de stadt <rhyme label="b" type="m">playsant</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Die Joannes sach <rhyme label="a" type="f" corresp="#s1:l1">dalen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Verciert aen elcken <rhyme label="b" type="m" corresp="#s1:l2">cant</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Als een reyn Bruydt <rhyme label="b" type="m" corresp="#s1:l2">triumphant</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Voor haren Man <rhyme label="c" type="f">ghepresen</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">T'nieu Jerusalem <rhyme label="b" type="m" corresp="#s1:l2">constant</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">D'welck heeft Gods eerlijck <rhyme label="c" type="f" corresp="#s1:l6">wesen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">T'wesen van dees stadt <rhyme label="a" type="f">schoone</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Was seer wel <rhyme label="b" type="m">ghefundeert</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Twaelf fundamenten <rhyme label="a" type="f" corresp="#s2:l1">ydoone</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Twaelf poorten, dit <rhyme label="b" type="m" corresp="#s2:l2">noteert</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Twaelf Enghels <rhyme label="b" type="m" corresp="#s2:l2">onghecesseert</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Houden aldaer de <rhyme label="c" type="f">wachte</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Op dat daer niet en <rhyme label="b" type="m" corresp="#s2:l2">verkeert</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Dat onreyne <rhyme label="c" type="f" corresp="#s2:l6">gheslachte</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Met eenen hooghen <rhyme label="a" type="f">muere</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Is dese stadt <rhyme label="b" type="m">bewaert</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Daer behoeft t'gheener <rhyme label="a" type="f" corresp="#s3:l1">ure</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Keersse noch licht <rhyme label="b" type="m" corresp="#s3:l2">vermaert</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Sy is van t'Lam Gods <rhyme label="b" type="m" corresp="#s3:l2">verclaert</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Op den gront der <rhyme label="c" type="f">Propheten</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Ghebout, van reynder <rhyme label="b" type="m" corresp="#s3:l2">aert</rhyme></l>
        <l id="s3:l8" met="3" type="-+">d'Apostelen wy <rhyme label="c" type="f" corresp="#s3:l6">weten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Tot dese stadt vol <rhyme label="a" type="f">eeren</rhyme></l>
        <l id="s4:l2" met="3" type="-+">En mach niemandt in <rhyme label="b" type="m">gaen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Hy moet hem eerst <rhyme label="a" type="f" corresp="#s4:l1">bekeeren</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">En doen, nae Schrifts <rhyme label="b" type="m" corresp="#s4:l2">vermaen</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Den ouden rock der zonden <rhyme label="b" type="m" corresp="#s4:l2">saen</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Die moet zijn <rhyme label="c" type="f">afghetoghen</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Als een nieu herboren <rhyme label="b" type="m" corresp="#s4:l2">graen</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Onder Gods handt <rhyme label="c" type="f" corresp="#s4:l6">gheboghen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Tot dees stadt, ick <rhyme label="a" type="f">aenschouwe</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">En is maer een en <rhyme label="b" type="m">padt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Dien is smal ende <rhyme label="a" type="f" corresp="#s5:l1">nouwe</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Christus leert selve <rhyme label="b" type="m" corresp="#s5:l2">dat</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Veel werden op den wegh <rhyme label="b" type="m" corresp="#s5:l2">madt</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Die in de liefde <rhyme label="c" type="f">vercouden</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Werden van Gods woorden <rhyme label="b" type="m" corresp="#s5:l2">sadt</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">t'Gheloof siet men <rhyme label="c" type="f" corresp="#s5:l6">verouden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">De poorten deser <rhyme label="a" type="f">stede</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Sluyten, by nachte, <rhyme label="b" type="m">niet</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Alle die staen nae <rhyme label="a" type="f" corresp="#s6:l1">vrede</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Dringt in met crachte, <rhyme label="b" type="m" corresp="#s6:l2">siet</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Die dit boos gheslachte, <rhyme label="b" type="m" corresp="#s6:l2">liet</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Als den knecht <rhyme label="c" type="f">ghestichtich</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Die niet van sijn wachte, <rhyme label="b" type="m" corresp="#s6:l2">vliet</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Verwacht den Heer <rhyme label="c" type="f" corresp="#s6:l6">voorsichtich</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Dees stadt schoon van <rhyme label="a" type="f">ghesteente</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Claer als den <rhyme label="b" type="m">cristalijn</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Verstae ick Gods <rhyme label="a" type="f" corresp="#s7:l1">Ghemeente</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Waer in tot elck <rhyme label="b" type="m" corresp="#s7:l2">termijn</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Is een Gheloof, een Doopsel <rhyme label="b" type="m" corresp="#s7:l2">fijn</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Een eenich Godt <rhyme label="c" type="f">almachtich</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Die aldaer sal eeuwich <rhyme label="b" type="m" corresp="#s7:l2">zijn</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Als Gouverneur <rhyme label="c" type="f" corresp="#s7:l6">waerachtich</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Die desen Heere sal <rhyme label="a" type="f">dienen</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Moet wesen dus <rhyme label="b" type="m">bereyt</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Als die Christen <rhyme label="a" type="f" corresp="#s8:l1">ingienen</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Die hebben <rhyme label="b" type="m" corresp="#s8:l2">afgheleyt</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Alle bedroch end' <rhyme label="b" type="m" corresp="#s8:l2">archeyt</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Verciert met alle goede <rhyme label="c" type="f">wercken</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Wt liefden die naeckten <rhyme label="b" type="m" corresp="#s8:l2">cleyt</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Die hongher gheerne <rhyme label="c" type="f" corresp="#s8:l6">stercken</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">D'wapen van desen <rhyme label="a" type="f">strijde</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Is niet vleeschelijck, <rhyme label="b" type="m">maer</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Gheestelijck tot allen <rhyme label="a" type="f" corresp="#s9:l1">tijde</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Machtich voor Godt <rhyme label="b" type="m" corresp="#s9:l2">eerbaer</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Treckt aen t'harnas Gods <rhyme label="b" type="m" corresp="#s9:l2">claer</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Den Helm der hopen <rhyme label="c" type="f">claer</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">En t'zweert des Gheests <rhyme label="b" type="m" corresp="#s9:l2">voorwaer</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">De voeten gheschoeyt met <rhyme label="c" type="f" corresp="#s9:l6">vrede</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Dus ghy vrome <rhyme label="a" type="f">soldaten</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Bewaert dees stadt <rhyme label="b" type="m">playsant</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Op dat daer in gheen <rhyme label="a" type="f" corresp="#s10:l1">gaten</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Gemaeckt en werden, <rhyme label="b" type="m" corresp="#s10:l2">want</rhyme></l>
        <l id="s10:l5" met="3" type="-+">Daer is nu so menich <rhyme label="b" type="m" corresp="#s10:l2">vyandt</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Die alle doen haer <rhyme label="c" type="f">beste</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Of sy aen eenighen <rhyme label="b" type="m" corresp="#s10:l2">cant</rhyme></l>
        <l id="s10:l8" met="3" type="-+">Conden comen door de <rhyme label="c" type="f" corresp="#s10:l6">veste</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Oorlof vrome <rhyme label="a" type="f">Chijchslieden</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Die desen strijdt <rhyme label="b" type="m">aenveert</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Doet naer t'Capiteyns <rhyme label="a" type="f" corresp="#s11:l1">gebieden</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">End' u vromelijck <rhyme label="b" type="m" corresp="#s11:l2">weert</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Dat u Satan niet en <rhyme label="b" type="m" corresp="#s11:l2">deert</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Sijn pijlen fel en <rhyme label="c" type="f">vyerich</rhyme></l>
        <l id="s11:l7" met="3" type="-+">Blust uyt, door des Gheests <rhyme label="b" type="m" corresp="#s11:l2">zweert</rhyme>,</l>
        <l id="s11:l8" met="3" type="-+">Zijt als Schapen <rhyme label="c" type="f" corresp="#s11:l6">goedertierich</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

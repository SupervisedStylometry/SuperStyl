    <tags/>
    <melody>Rein maagdje met eer</melody>
  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">HOe zien wy d’arme <rhyme label="a" type="f">zielen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Die deur de <rhyme label="b" type="m">ketterij</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Verleyd zijn, dus <rhyme label="a" type="f" corresp="#s1:l1">vernielen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">‘tZy beeld, ’t zy <rhyme label="b" type="m" corresp="#s1:l2">schilderij</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Van Christus heylig <rhyme label="c" type="m">kruys</rhyme></l>
        <l id="s1:l6" met="3" type="-+">En van zijn beste <rhyme label="d" type="f">vrinden</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Die d’eer van Godes <rhyme label="c" type="m" corresp="#s1:l5">huys</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Van ouds altijd <rhyme label="d" type="f" corresp="#s1:l6">beminden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Helaes! men nomt het <rhyme label="a" type="f">yver</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Van’t Goddelijk <rhyme label="b" type="m">gebod</rhyme>:</l>
        <l id="s2:l3" met="3" type="-+">Maer Satan is de <rhyme label="a" type="f" corresp="#s2:l1">drijver</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Van dit onzalig <rhyme label="b" type="m" corresp="#s2:l2">rot</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Hy kan verdragen <rhyme label="c" type="m">niet</rhyme></l>
        <l id="s2:l6" met="3" type="-+">De vruchten, en de <rhyme label="d" type="f">prijzen</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Der deugden, die hy <rhyme label="c" type="m" corresp="#s2:l5">ziet</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Dat uit de Beelden <rhyme label="d" type="f" corresp="#s2:l6">rijzen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">D’ootmoedige <rhyme label="a" type="f">vermeren</rhyme>:</l>
        <l id="s3:l2" met="3" type="-+">Men lijdt ten lieven <rhyme label="b" type="m">dank</rhyme>.</l>
        <l id="s3:l3" met="3" type="-+">Den rijkdom wensch <rhyme label="a" type="f" corresp="#s3:l1">t’ontberen</rhyme>;</l>
        <l id="s3:l4" met="3" type="-+">De starke worden <rhyme label="b" type="m" corresp="#s3:l2">krank</rhyme>;</l>
        <l id="s3:l5" met="3" type="-+">De eigen wil <rhyme label="c" type="m">verplet</rhyme>:</l>
        <l id="s3:l6" met="3" type="-+">De wraek blijft <rhyme label="d" type="f">achterwegen</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Wanneermen maer en <rhyme label="c" type="m" corresp="#s3:l5">let</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Op ’t Crucifix te <rhyme label="d" type="f" corresp="#s3:l6">degen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Dit is de Christen <rhyme label="a" type="f">vlagge</rhyme>;</l>
        <l id="s4:l2" met="3" type="-+">Dit is de rode <rhyme label="b" type="m">vaen</rhyme>:</l>
        <l id="s4:l3" met="3" type="-+">Dit is de scharpe <rhyme label="a" type="f" corresp="#s4:l1">dagge</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Die Satan de’e <rhyme label="b" type="m" corresp="#s4:l2">vergaen</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">’t Is deze die hem <rhyme label="c" type="m">doedt</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Gedenken de vijf <rhyme label="d" type="f">wonden</rhyme>;</l>
        <l id="s4:l7" met="3" type="-+">En ’t Maerjen beeld de <rhyme label="c" type="m" corresp="#s4:l5">voet</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Van die hem heeft <rhyme label="d" type="f" corresp="#s4:l6">geschonden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">d’ Apostelen des <rhyme label="a" type="f">Heeren</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">De Martelaren, <rhyme label="b" type="m">en</rhyme></l>
        <l id="s5:l3" met="3" type="-+">d’Oudvaderen doen <rhyme label="a" type="f" corresp="#s5:l1">keren</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Den  zondaer tot <rhyme label="b" type="m" corresp="#s5:l2">beken</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">De overspeelder <rhyme label="c" type="m">laet</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Door schaemt, zijn <rhyme label="d" type="f">Concubinen</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Als hy de <rhyme label="c" type="m" corresp="#s5:l5">Maegde-staet</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Haer eer zoo ziet <rhyme label="d" type="f" corresp="#s5:l6">bepijnen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Wat dronkaerd zoo <rhyme label="a" type="f">vergeten</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Wat woukeraer zoo <rhyme label="b" type="m">wrek</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Die niet terstond <rhyme label="a" type="f" corresp="#s6:l1">verweten</rhyme></l>
        <l id="s6:l4" met="3" type="-+">En werde zijn <rhyme label="b" type="m" corresp="#s6:l2">gebrek</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Deur een secreten <rhyme label="c" type="m">vois</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Als hy maer kwam ter <rhyme label="d" type="f">Kerken</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Op ’t aenzigt van <rhyme label="c" type="m" corresp="#s6:l5">Francois</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Of Ian Baptist te <rhyme label="d" type="f" corresp="#s6:l6">merken</rhyme>?</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Naer dien dan deur de <rhyme label="a" type="f">Beelden</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Den Hemel werd <rhyme label="b" type="m">geeerd</rhyme>;</l>
        <l id="s7:l3" met="3" type="-+">De mensch van aerdse <rhyme label="a" type="f" corresp="#s7:l1">weelden</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Tot Chrisen-tucht <rhyme label="b" type="m" corresp="#s7:l2">bekeerd</rhyme>:</l>
        <l id="s7:l5" met="3" type="-+">De liefde Goods <rhyme label="c" type="m">bevat</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">En t’ongeloof <rhyme label="d" type="f">verlaten</rhyme>;</l>
        <l id="s7:l7" met="3" type="-+">Zoo’n ist geen wonder, <rhyme label="c" type="m" corresp="#s7:l5">dat</rhyme></l>
        <l id="s7:l8" met="3" type="-+">De Hel die komt te <rhyme label="d" type="f" corresp="#s7:l6">haten</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">En dit is, wildyt <rhyme label="a" type="f">weten</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">De yver-zucht, daer <rhyme label="b" type="m">deur</rhyme></l>
        <l id="s8:l3" met="3" type="-+">De Beelden heeft <rhyme label="a" type="f" corresp="#s8:l1">gesmeten</rhyme></l>
        <l id="s8:l4" met="3" type="-+">De nieu vervormde <rhyme label="b" type="m" corresp="#s8:l2">keur</rhyme>.</l>
        <l id="s8:l5" met="3" type="-+">Het blijkt, want inde <rhyme label="c" type="m">stee</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Van Chrstus, en zijn <rhyme label="d" type="f">knechten</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Zy ’t beeld van <rhyme label="c" type="m" corresp="#s8:l5">Asmodee</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Al om heeft laten <rhyme label="d" type="f" corresp="#s8:l6">rechten</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">’t Sijn niet dan minne  <rhyme label="a" type="f">spelen</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Van Venus en <rhyme label="b" type="m">Vulcaen</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Priapen, en <rhyme label="a" type="f" corresp="#s9:l1">Bordelen</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Die nu ‘t aenschouwen <rhyme label="b" type="m" corresp="#s9:l2">staen</rhyme>.</l>
        <l id="s9:l5" met="3" type="-+">En daer toe een <rhyme label="c" type="m">gespuis</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Van Satyrs en <rhyme label="d" type="f">Grimassen</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Doe voor ’t geslage <rhyme label="c" type="m" corresp="#s9:l5">kruis</rhyme></l>
        <l id="s9:l8" met="3" type="-+">Vervullen all’ de <rhyme label="d" type="f" corresp="#s9:l6">kassen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Zoo dat de lieve <rhyme label="a" type="f">knapen</rhyme></l>
        <l id="s10:l2" met="3" type="-+">(Voorwaer wel ’t haerder <rhyme label="b" type="m">eer</rhyme>)</l>
        <l id="s10:l3" met="3" type="-+">Doen merken aen het <rhyme label="a" type="f" corresp="#s10:l1">wapen</rhyme></l>
        <l id="s10:l4" met="3" type="-+">De stand van haeren <rhyme label="b" type="m" corresp="#s10:l2">Heer</rhyme>.</l>
        <l id="s10:l5" met="3" type="-+">Want aende <rhyme label="c" type="m">schildery</rhyme></l>
        <l id="s10:l6" met="3" type="-+">De zucht haer plag te <rhyme label="d" type="f">toonen</rhyme></l>
        <l id="s10:l7" met="3" type="-+">Van volk, of <rhyme label="c" type="m" corresp="#s10:l5">Burgery</rhyme>,</l>
        <l id="s10:l8" met="3" type="-+">Die huis of stad <rhyme label="d" type="f" corresp="#s10:l6">bewonen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Gereformeerde <rhyme label="a" type="f">Volken</rhyme>!</l>
        <l id="s11:l2" met="3" type="-+">Helaes, en kunje <rhyme label="b" type="m">noch</rhyme></l>
        <l id="s11:l3" met="3" type="-+">In u noch in uw’ <rhyme label="a" type="f" corresp="#s11:l1">tolken</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Niet zien het claer <rhyme label="b" type="m" corresp="#s11:l2">bedrog</rhyme></l>
        <l id="s11:l5" met="3" type="-+">Des duyvels? Och de <rhyme label="c" type="m">Hel</rhyme></l>
        <l id="s11:l6" met="3" type="-+">Haet, onder <rhyme label="d" type="f">Beelde-schemel</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">De Beelden niet, maer <rhyme label="c" type="m" corresp="#s11:l5">wel</rhyme></l>
        <l id="s11:l8" met="3" type="-+">De heerkracht vanden <rhyme label="d" type="f" corresp="#s11:l6">Hemel</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Wild ghy u dan <rhyme label="a" type="f">bevrijen</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Hier in! zoo kiest of <rhyme label="b" type="m">deeld</rhyme>:</l>
        <l id="s12:l3" met="3" type="-+">Laet all’ uw’ <rhyme label="a" type="f" corresp="#s12:l1">schilderijen</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Of duld ook Christus <rhyme label="b" type="m" corresp="#s12:l2">Beeld</rhyme>.</l>
        <l id="s12:l5" met="3" type="-+">Want is door Goods <rhyme label="c" type="m">bevel</rhyme></l>
        <l id="s12:l6" met="3" type="-+">Verboon het Beelden <rhyme label="d" type="f">maken</rhyme>,</l>
        <l id="s12:l7" met="3" type="-+">Zoo moet ghy d’een zoo <rhyme label="c" type="m" corresp="#s12:l5">wel</rhyme></l>
        <l id="s12:l8" met="3" type="-+">Al d’andere <rhyme label="d" type="f" corresp="#s12:l6">verzaken</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

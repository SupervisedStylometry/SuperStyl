  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Komt, komt, o! driemael Heyl’ge <rhyme label="a" type="m">Geest</rhyme>!</l>
        <l id="s1:l2" met="4" type="-+">Ay zegen onse <rhyme label="a" type="m" corresp="#s1:l1">Pinxter-Feest</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Komt Tortel-Duyf van ‘s Hemels <rhyme label="b" type="m">dack</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">En brengh ons den <rhyme label="b" type="m" corresp="#s1:l3">Olijven-Tack</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Vertrooster brengh ons Christus <rhyme label="a" type="m">vree</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">En neem in ons gheweten <rhyme label="a" type="m" corresp="#s2:l1">stee</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">O Gheest maeck onsen gheest <rhyme label="b" type="m">ghewis</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Dat Godt ons aller Vader <rhyme label="b" type="m" corresp="#s2:l3">is</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Gods Vingher die het steenen <rhyme label="a" type="m">hert</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Vermorselt, dat het weecker <rhyme label="a" type="m" corresp="#s3:l1">wert</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">En Christus wet, die eeuwigh <rhyme label="b" type="m">blijft</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">In ons ghemoet en sinnen <rhyme label="b" type="m" corresp="#s3:l3">schrijft</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">O ghy die onbegrijp’lijck <rhyme label="a" type="m">zijt</rhyme>!</l>
        <l id="s4:l2" met="4" type="-+">Ons hert tot uwen Tempel <rhyme label="a" type="m" corresp="#s4:l1">wijt</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En ons inwendigheyt <rhyme label="b" type="m">herschept</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Die lust by ons te woonen <rhyme label="b" type="m" corresp="#s4:l3">hebt</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Komt Hemeldou en <rhyme label="a" type="m">overstort</rhyme></l>
        <l id="s5:l2" met="4" type="-+">‘t Ghemoet, onvruchtbaer en <rhyme label="a" type="m" corresp="#s5:l1">verdort</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">O stroom des levens! o <rhyme label="b" type="m">Fonteyn</rhyme>!</l>
        <l id="s5:l4" met="4" type="-+">Bevochtight ons en wascht ons <rhyme label="b" type="m" corresp="#s5:l3">reyn</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Komt Godtlijk vyer en steeckt <rhyme label="a" type="m">voortaen</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Ons koude ziel met yver <rhyme label="a" type="m" corresp="#s6:l1">aen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Komty heyligh vyer verteert, <rhyme label="b" type="m">verslint</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Al wat in ons noch ‘t vleesch <rhyme label="b" type="m" corresp="#s6:l3">bemint</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Ghy Wint des Heeren, leydt doch <rhyme label="a" type="m">mee</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Der zielen Schip in ‘s Werelts <rhyme label="a" type="m" corresp="#s7:l1">Zee</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Op datse vry van Schip-breuck <rhyme label="b" type="m">dan</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Belande in ‘t Hemels <rhyme label="b" type="m" corresp="#s7:l3">Canaan</rhyme>.</l>
      </lg>
    </lg>
  </text>

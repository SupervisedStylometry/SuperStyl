    <melody>De vogeltjes in de muiten</melody>
    <categories>
      <category translation="emotions">emoties</category>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Soetken Gerijts</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">GHenade van Godt den <rhyme label="a" type="f">vader</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Volstandicheyt en <rhyme label="b" type="m">cracht</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Wensch ick v beyde te <rhyme label="a" type="f" corresp="#s1:l1">gader</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Dat ghy hier met <rhyme label="b" type="m" corresp="#s1:l2">eendracht</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Al in Gods weghen <rhyme label="c" type="f">wandelt</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Mijn broeder en suster <rhyme label="d" type="m">fijn</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Oprechte gherechticheyt <rhyme label="c" type="f" corresp="#s1:l5">wandelt</rhyme></l>
        <l id="s1:l8" met="3" type="-+">So Christenen schuldich <rhyme label="d" type="m" corresp="#s1:l6">zijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Een liet most ick v <rhyme label="a" type="f">maecken</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Al is mijn wijsheyt <rhyme label="b" type="m">cleyn</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Nae v begheerte wilt <rhyme label="a" type="f" corresp="#s2:l1">smaecken</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Want suster wy en hebben <rhyme label="b" type="m" corresp="#s2:l2">pleyn</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Nu niet veel <rhyme label="c" type="f">conuersacy</rhyme></l>
        <l id="s2:l6" met="3" type="-+">In desen quaden <rhyme label="d" type="m">tijt</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Met weynich <rhyme label="c" type="f" corresp="#s2:l5">reuerracy</rhyme></l>
        <l id="s2:l8" met="3" type="-+">V in den Heer <rhyme label="d" type="m" corresp="#s2:l6">verblijt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Sijn wy na Paulus <rhyme label="a" type="f">sproken</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Met Christum op <rhyme label="b" type="m">ghestaen</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Dat hemels is laet ons <rhyme label="a" type="f" corresp="#s3:l1">soecken</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Tis hier so haest <rhyme label="b" type="m" corresp="#s3:l2">ghedaen</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Nae desen tijt so wy <rhyme label="c" type="f">lesen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Is gheen ghenade <rhyme label="d" type="m">meer</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Laet ons als knechten <rhyme label="c" type="f" corresp="#s3:l5">wesen</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Die wachten op haren <rhyme label="d" type="m" corresp="#s3:l6">Heer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Die ghetrouwen moeten <rhyme label="a" type="f">dragen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Sorge so Paulus <rhyme label="b" type="m">leert</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Malcanderen te <rhyme label="a" type="f" corresp="#s4:l1">behaghen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Int goede dit wel <rhyme label="b" type="m" corresp="#s4:l2">grondeert</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Als elck wil zijn <rhyme label="c" type="f">ghedachtich</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Wat zijnen roep <rhyme label="d" type="m">betaemt</rhyme></l>
        <l id="s4:l7" met="3" type="-+">So blijuen sy wel <rhyme label="c" type="f" corresp="#s4:l5">eendrachtich</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Als kinderen Gods <rhyme label="d" type="m" corresp="#s4:l6">ghenaemt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Die een huysvrou heeft <rhyme label="a" type="f">eerbaerlijck</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Recht oft hy haer had <rhyme label="b" type="m">niet</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Die comenschapt <rhyme label="a" type="f" corresp="#s5:l1">eenpaerlijck</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Of sy niet besaten <rhyme label="b" type="m" corresp="#s5:l2">siet</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Een yeghelick mach hem <rhyme label="c" type="f">proeuen</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Hoe nae dat hy dit <rhyme label="d" type="m">coomt</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Die in Christus <rhyme label="c" type="f" corresp="#s5:l5">gheloouen</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Siet dat ghy v recht <rhyme label="d" type="m" corresp="#s5:l6">beroemt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Godt wil een volck wilt <rhyme label="a" type="f">hooren</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Die gheestelijck zijn <rhyme label="b" type="m">ghesint</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Ende wt hem <rhyme label="a" type="f" corresp="#s6:l1">ghebooren</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Also men claerlijck <rhyme label="b" type="m" corresp="#s6:l2">vint</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Want vleesch noch bloet <rhyme label="c" type="f">eylacy</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Gods rijck niet besitten <rhyme label="d" type="m">sal</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Siet toe ghy Christen <rhyme label="c" type="f" corresp="#s6:l5">nacy</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Bidt waeckt int aertsche <rhyme label="d" type="m" corresp="#s6:l6">dal</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Die Heer wil v <rhyme label="a" type="f">bewaren</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Mijn lieue suster <rhyme label="b" type="m">och</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Met name ghy die sult <rhyme label="a" type="f" corresp="#s7:l1">varen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Ick wensch v cracht wijsheyt <rhyme label="b" type="m" corresp="#s7:l2">doch</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Daer weynich Christenen <rhyme label="c" type="f">woonen</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Och suster hout goede <rhyme label="d" type="m">wacht</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Wilt op den Heer toch <rhyme label="c" type="f" corresp="#s7:l5">stonen</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Slaet op die Schrift wel <rhyme label="d" type="m" corresp="#s7:l6">acht</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Die vergaderinge te <rhyme label="a" type="f">verlaten</rhyme></l>
        <l id="s8:l2" met="3" type="-+">En mach geensins <rhyme label="b" type="m">bestaen</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Die menschen die niet en <rhyme label="a" type="f" corresp="#s8:l1">aten</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Mosten naet vleesch <rhyme label="b" type="m" corresp="#s8:l2">vergaen</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Maer die niet en <rhyme label="c" type="f">verworpen</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Gods ordonnantie <rhyme label="d" type="m">goet</rhyme></l>
        <l id="s8:l7" met="3" type="-+">Het sy in steden of <rhyme label="c" type="f" corresp="#s8:l5">dorpen</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Sodanighe godt wel <rhyme label="d" type="m" corresp="#s8:l6">voet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Die in die wet des <rhyme label="a" type="f">heeren</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Haer lust hebben <rhyme label="b" type="m">verstant</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Sullen nae Dauids <rhyme label="a" type="f" corresp="#s9:l1">leeren</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Sijn als een boom <rhyme label="b" type="m" corresp="#s9:l2">gheplant</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Al op die water <rhyme label="c" type="f">beecken</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Och suster hier op <rhyme label="d" type="m">siet</rhyme></l>
        <l id="s9:l7" met="3" type="-+">Nae Jeremias <rhyme label="c" type="f" corresp="#s9:l5">sproecken</rhyme></l>
        <l id="s9:l8" met="3" type="-+">Een drooch Jaer schaet haer <rhyme label="d" type="m" corresp="#s9:l6">niet</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Wat sal ick meer <rhyme label="a" type="f">verhalen</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Den tijt valt my te <rhyme label="b" type="m">cort</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Laet ons van hem niet <rhyme label="a" type="f" corresp="#s10:l1">dwalen</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Die voor ons heeft <rhyme label="b" type="m" corresp="#s10:l2">wtghestort</rhyme></l>
        <l id="s10:l5" met="3" type="-+">Sijn bloet neemt dit voor <rhyme label="c" type="f">ooghen</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Waer mede hy ons coft <rhyme label="d" type="m">dier</rhyme></l>
        <l id="s10:l7" met="3" type="-+">So dat wy niet en <rhyme label="c" type="f" corresp="#s10:l5">mooghen</rhyme></l>
        <l id="s10:l8" met="3" type="-+">Ons selue leuen <rhyme label="d" type="m" corresp="#s10:l6">hier</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Nu wil ick v <rhyme label="a" type="f">beueelen</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Den Heer al op dit <rhyme label="b" type="m">pas</rhyme></l>
        <l id="s11:l3" met="3" type="-+">Die wil v gracy <rhyme label="a" type="f" corresp="#s11:l1">deelen</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Want alle vleesch is <rhyme label="b" type="m" corresp="#s11:l2">gras</rhyme></l>
        <l id="s11:l5" met="3" type="-+">Nu broeders en susters wy <rhyme label="c" type="f">leesen</rhyme></l>
        <l id="s11:l6" met="3" type="-+">Dat Tobias zijnen <rhyme label="d" type="m">zoon</rhyme></l>
        <l id="s11:l7" met="3" type="-+">Van ioncx op leerde godt <rhyme label="c" type="f" corresp="#s11:l5">vresen</rhyme></l>
        <l id="s11:l8" met="3" type="-+">Merckt dit exempel <rhyme label="d" type="m" corresp="#s11:l6">schoon</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

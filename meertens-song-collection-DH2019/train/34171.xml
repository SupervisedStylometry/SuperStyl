  <author>Petrus Suetmans, Eustachius de Meyer</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">LEst op eenen avont <rhyme label="a" type="m">stont</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Quam my een Vent <rhyme label="b" type="f">begroeten</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Die ick soo bevallyck <rhyme label="a" type="m" corresp="#s1:l1">vont</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Als Maf-sack onsen <rhyme label="b" type="f" corresp="#s1:l2">Cloeten</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">'tWas een Kerrel soo vol <rhyme label="c" type="m">gheest</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Als de oudtste eeckel <rhyme label="c" type="m" corresp="#s1:l5">beest</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">'tIs Joncker Plom-paert die ick <rhyme label="d" type="m">meyn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Seght, ben ick niet wel <rhyme label="a" type="m">voor-sien</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Met sulcken hupschen <rhyme label="b" type="f">Joncker</rhyme>?</l>
        <l id="s2:l3" met="4" type="+-">Die my synen dienst komt <rhyme label="a" type="m" corresp="#s2:l1">biÃªn</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Is hy niet schoon in't <rhyme label="b" type="f" corresp="#s2:l2">doncker</rhyme>?</l>
        <l id="s2:l5" met="4" type="+-">Soo ick sien syn lief <rhyme label="c" type="m">aenschyn</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">'tSchynt een Baviaen te <rhyme label="c" type="m" corresp="#s2:l5">zyn</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">'tIs Joncker Plompaert die ick <rhyme label="d" type="m">meyn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Hy stinckt, oft hy waer <rhyme label="a" type="m">verrot</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Als een vuyl rogh van <rhyme label="b" type="f">binnen</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Hy loopt met den neus <rhyme label="a" type="m" corresp="#s3:l1">besnot</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Bezeevert tot syn <rhyme label="b" type="f" corresp="#s3:l2">kinne</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">En hy is van buyck, en <rhyme label="c" type="m">rugh</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Als een oude pad' soo <rhyme label="c" type="m" corresp="#s3:l5">vlugh</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">'tIs Joncker plompaert die ick <rhyme label="d" type="m">meyn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Syn beenen zyn grof, en <rhyme label="a" type="m">dick</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Ghelyck als Wevers <rhyme label="b" type="f">boomen</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Ick krygh van 'tpostuer een <rhyme label="a" type="m" corresp="#s4:l1">schrick</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Als ick hem aen-sien <rhyme label="b" type="f" corresp="#s4:l2">komen</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Want hy treedt soo <rhyme label="c" type="m">triomphant</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Als den outsten Os van <rhyme label="c" type="m" corresp="#s4:l5">'tLant</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">'tIs Joncker Plompaert die <rhyme label="d" type="m">meyn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Dan draeyt hy noch synen <rhyme label="a" type="m">eers</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Als eenen <rhyme label="b" type="f">Mostaert-meulen</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">En hy houdt het hooft soo <rhyme label="a" type="m" corresp="#s5:l1">d'weers</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Als een jonck Esels <rhyme label="b" type="f" corresp="#s5:l2">Veulen</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Soo ick syn ghesicht <rhyme label="c" type="m">aenschou</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">My dunckt 'tis den <rhyme label="c" type="m" corresp="#s5:l5">Bitebau</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">'tIs Joncker Plompaert die ick <rhyme label="d" type="m">meyn</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Hy is als een Wolf <rhyme label="a" type="m">ghetant</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Als hy den muyl doet <rhyme label="b" type="f">open</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Ick gheloof: dat ghy van <rhyme label="a" type="m" corresp="#s6:l1">kant</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Van vreese soudt gaen <rhyme label="b" type="f" corresp="#s6:l2">loopen</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Men sou met gheen handt vol <rhyme label="c" type="m">hoy</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Stoppen syne back-huys <rhyme label="c" type="m" corresp="#s6:l5">ploy</rhyme>.</l>
        <l id="s6:l7" met="4" type="-+">'tIs Joncker Plompaert die ick <rhyme label="d" type="m">meyn</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Spraeck, en sangh die is soo <rhyme label="a" type="m">schoon</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Ghelyck de Buffels <rhyme label="b" type="f">brullen</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">En noch singht hy synen <rhyme label="a" type="m" corresp="#s7:l1">thoon</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Heel daghen als een <rhyme label="b" type="f" corresp="#s7:l2">dullen</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">En hy thoont hem soo <rhyme label="c" type="m">beleeft</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Als een soegh die Vigghen <rhyme label="c" type="m" corresp="#s7:l5">heeft</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">'tIs Joncker Plompaert die ick <rhyme label="d" type="m">meyn</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">'tIs een Prins om aen te <rhyme label="a" type="m">sien</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">In't maecksel van syn <rhyme label="b" type="f">kleeren</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Aen 'tfaitsoen souden wel <rhyme label="a" type="m" corresp="#s8:l1">thien</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Hun ambacht qualyck <rhyme label="b" type="f" corresp="#s8:l2">leeren</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">En daer steeckt in elcke <rhyme label="c" type="m">ploy</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Menigh hondert Muylders <rhyme label="c" type="m" corresp="#s8:l5">vloy</rhyme>,</l>
        <l id="s8:l7" met="4" type="-+">'tIs Joncker Plompaert die ick <rhyme label="d" type="m">meyn</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Wilt dan niemant zyn <rhyme label="a" type="m">ghevryt</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Van desen lompen <rhyme label="b" type="f">Buffel</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Ick voor myn deel, 'kschel hem <rhyme label="a" type="m" corresp="#s9:l1">quyt</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Al trock hy boven <rhyme label="b" type="f" corresp="#s9:l2">Duffel</rhyme>,</l>
        <l id="s9:l5" met="4" type="+-">Die al-sulcken Vryer <rhyme label="c" type="m">kryght</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">'tIs weert dat-se thien-mael <rhyme label="c" type="m" corresp="#s9:l5">nyght</rhyme>,</l>
        <l id="s9:l7" met="4" type="-+">'tIs Joncker Plompaert die ick <rhyme label="d" type="m">meyn</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

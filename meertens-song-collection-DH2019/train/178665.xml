  <author>François Halma</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">HEer, hoor myn geschrei en <rhyme label="a" type="f">reden</rhyme>,</l>
        <l id="s1:l2" met="2" type="+-">Neem myn <rhyme label="a" type="f" corresp="#s1:l1">beden</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Toch ter ooren: van 's landts <rhyme label="b" type="m">endt</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Roepe ik tot u, als myn <rhyme label="c" type="f">harte</rhyme>,</l>
        <l id="s1:l5" met="2" type="+-">Door myn <rhyme label="c" type="f" corresp="#s1:l4">smarte</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Overstelpt is met <rhyme label="b" type="m" corresp="#s1:l3">elendt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Leidt my op een rotz, te <rhyme label="a" type="f">hooge</rhyme></l>
        <l id="s2:l2" met="2" type="+-">Voor het <rhyme label="a" type="f" corresp="#s2:l1">ooge</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">En onnaakbaar, want gy <rhyme label="b" type="m">zyt</rhyme></l>
        <l id="s2:l4" met="4" type="+-">My een hulp, een sterke <rhyme label="c" type="f">tooren</rhyme>,</l>
        <l id="s2:l5" met="2" type="+-">Niet te <rhyme label="c" type="f" corresp="#s2:l4">stooren</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Door den vyandt, hem ten <rhyme label="b" type="m" corresp="#s2:l3">spyt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">'k Zal in uwe hut <rhyme label="a" type="f">verkeeren</rhyme>,</l>
        <l id="s3:l2" met="2" type="+-">Om u <rhyme label="a" type="f" corresp="#s3:l1">t'eeren</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">'k Blyf  'er tot in <rhyme label="b" type="m">eeuwigheit</rhyme>:</l>
        <l id="s3:l4" met="4" type="+-">'k Neem myn toevlucht in 't <rhyme label="c" type="f">verborgen</rhyme>,</l>
        <l id="s3:l5" met="2" type="+-">Buiten <rhyme label="c" type="f" corresp="#s3:l4">zorgen</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Van uw vleuglen, <rhyme label="b" type="m" corresp="#s3:l3">uitgebreidt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Gy, o Godt, neigt gunstig <rhyme label="a" type="f">d'ooren</rhyme>,</l>
        <l id="s4:l2" met="2" type="+-">Om te <rhyme label="a" type="f" corresp="#s4:l1">hooren</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Naar myn zielgeloften: <rhyme label="b" type="m">gy</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Hebt my d'erfenis <rhyme label="c" type="f">gegeeven</rhyme>,</l>
        <l id="s4:l5" met="2" type="+-">'t Heil en <rhyme label="c" type="f" corresp="#s4:l4">leven</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Van hen in uw vreeze en <rhyme label="b" type="m" corresp="#s4:l3">vry</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Gy vermeêrt, naar uw <rhyme label="a" type="f">behagen</rhyme>,</l>
        <l id="s5:l2" met="2" type="+-">'s Konings <rhyme label="a" type="f" corresp="#s5:l1">dagen</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">En bewaart hem als zyn <rhyme label="b" type="m">wacht</rhyme>:</l>
        <l id="s5:l4" met="4" type="+-">Zyne jaaren zult gy <rhyme label="c" type="f">rekken</rhyme>,</l>
        <l id="s5:l5" met="2" type="+-">Datze als <rhyme label="c" type="f" corresp="#s5:l4">strekken</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Van geslachte tot <rhyme label="b" type="m" corresp="#s5:l3">geslacht</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Hy zal voor Godts <rhyme label="a" type="f">aangezichte</rhyme>,</l>
        <l id="s6:l2" met="2" type="+-">In 't <rhyme label="a" type="f" corresp="#s6:l1">gerichte</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Eeuwig zitten: kom, <rhyme label="b" type="m">bereidt</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Goedertierenheit en <rhyme label="c" type="f">waarheit</rhyme>,</l>
        <l id="s6:l5" met="2" type="+-"><rhyme label="c" type="f" corresp="#s6:l4">Hemelklaarheit</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Hem ter hoede <rhyme label="b" type="m" corresp="#s6:l3">toegezeit</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Zoo zal ik uw' naame <rhyme label="a" type="f">pryzen</rhyme>,</l>
        <l id="s7:l2" met="2" type="+-">Eer <rhyme label="a" type="f" corresp="#s7:l1">bewyzen</rhyme></l>
        <l id="s7:l3" met="4" type="+-">Door myn zangen, met <rhyme label="b" type="m">ontzagh</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Eeuwiglyk, om, zonder <rhyme label="c" type="f">draalen</rhyme>,</l>
        <l id="s7:l5" met="2" type="+-">Te <rhyme label="c" type="f" corresp="#s7:l4">betaalen</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Myn geloften, dag by <rhyme label="b" type="m" corresp="#s7:l3">dag</rhyme>.</l>
      </lg>
    </lg>
  </text>

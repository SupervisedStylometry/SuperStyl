  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Een Coningh is de <rhyme label="a" type="m">heer</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Sijn Rijck is na en <rhyme label="a" type="m" corresp="#s1:l1">veer</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Alle steden en <rhyme label="b" type="f">landen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Beheerschen sijne <rhyme label="b" type="f" corresp="#s1:l3">handen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Wel dien die hem <rhyme label="c" type="m">betrout</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">En sijn bevelen <rhyme label="c" type="m" corresp="#s1:l5">hout</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Lieff’lijck hy haer <rhyme label="d" type="m">aensiet</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">End’ en verlaetse <rhyme label="d" type="m" corresp="#s1:l7">niet</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Wanneer sy sijn <rhyme label="c" type="m" corresp="#s1:l5">benout</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Hy went sijn oogen <rhyme label="a" type="m">fijn</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Op die rechtveerdigh <rhyme label="a" type="m" corresp="#s2:l1">sijn</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Hy luystert na <rhyme label="b" type="f">beneden</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Op alle haer <rhyme label="b" type="f" corresp="#s2:l3">ghebeden</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Hy doet wat hy <rhyme label="c" type="m">begeert</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Niemant sijn hant en <rhyme label="c" type="m" corresp="#s2:l5">keert</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Haer herte wort <rhyme label="d" type="m">verlicht</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">En wonderlijck <rhyme label="d" type="m" corresp="#s2:l7">ghesticht</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Die hy sijn weghen <rhyme label="c" type="m" corresp="#s2:l5">leert</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Of schoon sijn hulpe <rhyme label="a" type="m">toeft</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Hy weet wat haer <rhyme label="a" type="m" corresp="#s3:l1">behoeft</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Hy laetse na veel <rhyme label="b" type="f">treuren</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Eyndelijck troost <rhyme label="b" type="f" corresp="#s3:l3">ghebeuren</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Hy schenckt sijn liefde <rhyme label="c" type="m">soet</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">In grooter <rhyme label="c" type="m" corresp="#s3:l5">vervloet</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Dan sy hadden <rhyme label="d" type="m">verwacht</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Haer tonghe vrolijck <rhyme label="d" type="m" corresp="#s3:l7">lacht</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">En singhen in ‘t <rhyme label="c" type="m" corresp="#s3:l5">ghemoet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Onsen Godt is <rhyme label="a" type="m">planteyt</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Rijck van <rhyme label="a" type="m" corresp="#s4:l1">Bermhertigheyt</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">En met sijn milde <rhyme label="b" type="f">gaven</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Can hy de ziele <rhyme label="b" type="f" corresp="#s4:l3">laven</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Met sulcken soeten <rhyme label="c" type="m">smaack</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">En innerlijck <rhyme label="c" type="m" corresp="#s4:l5">vermaack</rhyme>.</l>
        <l id="s4:l7" met="3" type="-+">Soo dat sy al ‘t <rhyme label="d" type="m">verdriet</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Dat in der tijt <rhyme label="d" type="m" corresp="#s4:l7">gheschiet</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">Achten een cleyne <rhyme label="c" type="m" corresp="#s4:l5">saack</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Der vromen hope <rhyme label="a" type="m">staet</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Op Godt, haer <rhyme label="a" type="m" corresp="#s5:l1">toeverlaet</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Gheen quaet mach haer <rhyme label="b" type="f">vervoeren</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Verschricken noch <rhyme label="b" type="f" corresp="#s5:l3">beroeren</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Sy weten, ‘t sal in ‘t <rhyme label="c" type="m">endt</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Ten besten sijn <rhyme label="c" type="m" corresp="#s5:l5">ghewendt</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Godt die haerer neemt <rhyme label="d" type="m">acht</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Sijn Engelen met <rhyme label="d" type="m" corresp="#s5:l7">cracht</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">Sijn haer altijdt <rhyme label="c" type="m" corresp="#s5:l5">ontrent</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ghy die den Heere <rhyme label="a" type="m">vreest</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Weest vyerigh in den <rhyme label="a" type="m" corresp="#s6:l1">Geeft</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Recht op die slappe <rhyme label="b" type="f">handen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">En vreest niet y <rhyme label="b" type="f" corresp="#s6:l3">vyanden</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">In wel-doen niet <rhyme label="c" type="m">vertraeght</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">V noot den Heere <rhyme label="c" type="m" corresp="#s6:l5">claeght</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Soo sal hy uwen <rhyme label="d" type="m">sin</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Vervullen met sijn <rhyme label="d" type="m" corresp="#s6:l7">minn</rhyme>’</l>
        <l id="s6:l9" met="3" type="-+">Ist dat ghy hem <rhyme label="c" type="m" corresp="#s6:l5">behaeght</rhyme>.</l>
      </lg>
    </lg>
  </text>

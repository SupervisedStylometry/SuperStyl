    <melody>Gij die Christus hebt aangedaan</melody>
    <categories>
      <category translation="emotions">emoties</category>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ICk claghe o Heere al mijnen <rhyme label="a" type="m">noot</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Uerlost my vander eewigher <rhyme label="a" type="m" corresp="#s1:l1">doot</rhyme></l>
        <l id="s1:l3" met="3" type="-+">O God my wort so <rhyme label="b" type="f">banghen</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Helpt my nv strijden mijn Coninck <rhyme label="a" type="m" corresp="#s1:l1">groot</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Neemt vleesch en bloet <rhyme label="b" type="f" corresp="#s1:l3">gheuanghen</rhyme></l>
        <l id="s1:l6" met="2" type="-+">Heer eer <rhyme label="b" type="f" corresp="#s1:l3">langhen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Want sy hebben my ghewelt <rhyme label="a" type="m">ghedaen</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Daerom moet ick ten strijde <rhyme label="a" type="m" corresp="#s2:l1">wtgaen</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Strijden sonder <rhyme label="b" type="f">versaghen</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Helpt my vernielen desen duyuel <rhyme label="a" type="m" corresp="#s2:l1">saen</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Die als een leeu gaet om zijn <rhyme label="b" type="f" corresp="#s2:l3">behaghen</rhyme></l>
        <l id="s2:l6" met="2" type="-+">Alle <rhyme label="b" type="f" corresp="#s2:l3">daghen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Die lusten en die begheerten <rhyme label="a" type="m">quaet</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Die hebben my ghedaen groot <rhyme label="a" type="m" corresp="#s3:l1">ouerdaet</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Dat ick viel totter <rhyme label="b" type="f">helle</rhyme></l>
        <l id="s3:l4" met="4" type="-+">O Heere hadt ghy my niet <rhyme label="a" type="m" corresp="#s3:l1">omuaet</rhyme></l>
        <l id="s3:l5" met="4" type="-+">So had ick vergaen seer <rhyme label="b" type="f" corresp="#s3:l3">snelle</rhyme></l>
        <l id="s3:l6" met="2" type="-+">Met <rhyme label="b" type="f" corresp="#s3:l3">ghequelle</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Den wech is enghe ende <rhyme label="a" type="m">smal</rhyme></l>
        <l id="s4:l2" met="4" type="-+">So wy dat lesen ouer <rhyme label="a" type="m" corresp="#s4:l1">al</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Die daer leyt totten <rhyme label="b" type="f">leuen</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Schict v daer toe al in dit <rhyme label="a" type="m" corresp="#s4:l1">dal</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Tstaet Lucas derthien <rhyme label="b" type="f" corresp="#s4:l3">gheschreuen</rhyme></l>
        <l id="s4:l6" met="2" type="-+">Sonder <rhyme label="b" type="f" corresp="#s4:l3">sneuen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Maer hoort wat seyt ons Christus <rhyme label="a" type="m">claer</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Wie dat my wilt volghen <rhyme label="a" type="m" corresp="#s5:l1">naer</rhyme></l>
        <l id="s5:l3" met="3" type="-+">En zijn leuen wilt <rhyme label="b" type="f">behouden</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Wie dat verliesen sal hier en <rhyme label="a" type="m" corresp="#s5:l1">daer</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Dat wort hem wel <rhyme label="b" type="f" corresp="#s5:l3">vergouden</rhyme></l>
        <l id="s5:l6" met="2" type="-+">So wy <rhyme label="b" type="f" corresp="#s5:l3">houden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">O Heere ghy zijt mijnen troost <rhyme label="a" type="m">altoos</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Sterct my o God want ick ben <rhyme label="a" type="m" corresp="#s6:l1">broos</rhyme></l>
        <l id="s6:l3" met="3" type="-+">En wilt my nv <rhyme label="b" type="f">ontfermen</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Helpt my verwinnen den viant <rhyme label="a" type="m" corresp="#s6:l1">loos</rhyme></l>
        <l id="s6:l5" met="4" type="-+">U liefde laet in my <rhyme label="b" type="f" corresp="#s6:l3">verwermen</rhyme></l>
        <l id="s6:l6" met="2" type="-+">Hoort mijn <rhyme label="b" type="f" corresp="#s6:l3">kermen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Nv wapent my Heere als een vroom <rhyme label="a" type="m">man</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Dat ick verwinne met strijde <rhyme label="a" type="m" corresp="#s7:l1">dan</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Teghen die <rhyme label="b" type="f">ongherechticheden</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Doet my den helm der salicheyt <rhyme label="a" type="m" corresp="#s7:l1">an</rhyme></l>
        <l id="s7:l5" met="4" type="-+">Gheeft my den gheest des <rhyme label="b" type="f" corresp="#s7:l3">vreden</rhyme></l>
        <l id="s7:l6" met="2" type="-+">Na v <rhyme label="b" type="f" corresp="#s7:l3">seden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Heft op mijn hooft mijn Heere <rhyme label="a" type="m">reen</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Ghy zijt mijn toevlucht en mijnen <rhyme label="a" type="m" corresp="#s8:l1">steen</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Een leuende <rhyme label="b" type="f">fonteyne</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Op v staet alle mijn hope <rhyme label="a" type="m" corresp="#s8:l1">alleen</rhyme></l>
        <l id="s8:l5" met="4" type="-+">U moetmen louen int <rhyme label="b" type="f" corresp="#s8:l3">ghemeyne</rhyme></l>
        <l id="s8:l6" met="2" type="-+">Groot en <rhyme label="b" type="f" corresp="#s8:l3">cleyne</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Glorie sy God den Uader <rhyme label="a" type="m">schoon</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Die daer sidt in shemels <rhyme label="a" type="m" corresp="#s9:l1">throon</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Ghebenedijt moet hy <rhyme label="b" type="f">wesen</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Dat hy ons sandt synen eenighen <rhyme label="a" type="m" corresp="#s9:l1">soon</rhyme></l>
        <l id="s9:l5" met="4" type="-+">Door zijn wonden zijn wy <rhyme label="b" type="f" corresp="#s9:l3">ghenesen</rhyme></l>
        <l id="s9:l6" met="2" type="-+">So wy <rhyme label="b" type="f" corresp="#s9:l3">lesen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">En vreest v niet o Ierusalem <rhyme label="a" type="m">teer</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Uan tribulatie of van valsche <rhyme label="a" type="m" corresp="#s10:l1">leer</rhyme></l>
        <l id="s10:l3" met="3" type="-+">God sal v ruste <rhyme label="b" type="f">gheuen</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Onderhout zijn woort so lancx so <rhyme label="a" type="m" corresp="#s10:l1">meer</rhyme></l>
        <l id="s10:l5" met="4" type="-+">Ghy sult comen int eewich <rhyme label="b" type="f" corresp="#s10:l3">leuen</rhyme></l>
        <l id="s10:l6" met="2" type="-+">Hy salt v <rhyme label="b" type="f" corresp="#s10:l3">gheuen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Als Israel in die woestyne <rhyme label="a" type="m">lach</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Sy hadden so menighen droeuen <rhyme label="a" type="m" corresp="#s11:l1">dach</rhyme></l>
        <l id="s11:l3" met="3" type="-+">Eer sy te ruste <rhyme label="b" type="f">quamen</rhyme></l>
        <l id="s11:l4" met="4" type="-+">Also moetmen nv met veel <rhyme label="a" type="m" corresp="#s11:l1">gheclach</rhyme></l>
        <l id="s11:l5" met="4" type="-+">Lijden om Christus <rhyme label="b" type="f" corresp="#s11:l3">namen</rhyme></l>
        <l id="s11:l6" met="2" type="-+">En hem des niet <rhyme label="b" type="f" corresp="#s11:l3">schamen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Nv bidt den Heere <rhyme label="a" type="m">excellent</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Dat hy mach strijden tot inden <rhyme label="a" type="m" corresp="#s12:l1">ent</rhyme></l>
        <l id="s12:l3" met="3" type="-+">Die dit liedt heeft <rhyme label="b" type="f">ghesonghen</rhyme></l>
        <l id="s12:l4" met="4" type="-+">O God uwen gheest al in hem <rhyme label="a" type="m" corresp="#s12:l1">prent</rhyme></l>
        <l id="s12:l5" met="4" type="-+">Dat hy mach spreken met nieuwen <rhyme label="b" type="f" corresp="#s12:l3">tonghen</rhyme></l>
        <l id="s12:l6" met="2" type="-+"><rhyme label="b" type="f" corresp="#s12:l3">Onbedwonghen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">ICk en wil geen gout oft <rhyme label="a" type="f">goed'ren</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Kroon, noch rijck-stock, Princen <rhyme label="b" type="m">draght</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">'t Purper van de menschen <rhyme label="a" type="f" corresp="#s1:l1">goed'ren</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Noch hun onghemeten <rhyme label="b" type="m" corresp="#s1:l2">macht</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Noch met triumphante <rhyme label="c" type="f">Kotsen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Noch met glori', noch met <rhyme label="d" type="m">eer'</rhyme></l>
        <l id="s1:l7" met="4" type="+-">Mijn faem tot den hemel <rhyme label="c" type="f" corresp="#s1:l5">botsen</rhyme>,</l>
        <l id="s1:l8" met="6" type="+-">Seden-rijck // reden-rijck, <rhyme label="d" type="m" corresp="#s1:l6">nimmermeer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Ick en wil gheleerde <rhyme label="a" type="f">boecken</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Locht noch hemel, <rhyme label="b" type="m">sonne-vliedt</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Noch de sterren <rhyme label="a" type="f" corresp="#s2:l1">ondersoecken</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Noch den zee-loop, aerd', oft <rhyme label="b" type="m" corresp="#s2:l2">iet</rhyme>:</l>
        <l id="s2:l5" met="4" type="+-">Dan alleen het soete <rhyme label="c" type="f">minnen</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Van mijn lieve <rhyme label="d" type="m">Herderin</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Ick stier' gheirne all' mijn <rhyme label="c" type="f" corresp="#s2:l5">sinnen</rhyme></l>
        <l id="s2:l8" met="6" type="+-">Vol van vreught // vol van jeught, op de <rhyme label="d" type="m" corresp="#s2:l6">min</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Ick houd' van my <rhyme label="a" type="f">t'over-lommen</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Oft met groen oft jeughdigh <rhyme label="b" type="m">kruyt</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Kranskens vlechten, en met <rhyme label="a" type="f" corresp="#s3:l1">blommen</rhyme></l>
        <l id="s3:l4" met="4" type="+-">T'over-hullen dese <rhyme label="b" type="m" corresp="#s3:l2">bruydt</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Die haer' liefd' my heeft <rhyme label="c" type="f">ghegheven</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Aen het palen van dit <rhyme label="d" type="m">wout</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Daer wy altijdt sullen <rhyme label="c" type="f" corresp="#s3:l5">leven</rhyme></l>
        <l id="s3:l8" met="6" type="+-">T'saem ghepaert // veel-bejaert, worden <rhyme label="d" type="m" corresp="#s3:l6">oudt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Laet ons (grondt-steen van mijn <rhyme label="a" type="f">vreughden</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Eerste oorsaeck van <rhyme label="b" type="m">gheluck</rhyme>)</l>
        <l id="s4:l3" met="4" type="+-">Altijdt onse kriele <rhyme label="a" type="f" corresp="#s4:l1">jeughden</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Sien te weiren van den <rhyme label="b" type="m" corresp="#s4:l2">druck</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">En vereent ons vee <rhyme label="c" type="f">op-voeden</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Langhs dit beecxken, dat <rhyme label="d" type="m">om-gordt</rhyme></l>
        <l id="s4:l7" met="4" type="+-">Met veel kruyden, ons ten <rhyme label="c" type="f" corresp="#s4:l5">goeden</rhyme>,</l>
        <l id="s4:l8" met="6" type="+-">Ons ter deughdt // 's jaers sijn jeughdt gheeft en <rhyme label="d" type="m" corresp="#s4:l6">stort</rhyme>.</l>
      </lg>
    </lg>
  </text>

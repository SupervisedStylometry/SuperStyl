<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>32860</id>
    <date>
      <year-start>1614</year-start>
      <year-end>1614</year-end>
    </date>
    <tags>
      <tag standard-name="pinksterlied" translation="Pentecostal song">pinksterlied</tag>
      <tag standard-name="loflied" translation="praise song">loflied</tag>
    </tags>
    <melody>Christe qui lux es et dies</melody>
    <categories>
      <category translation="seasons and annual events">jaarkring</category>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Rumoldus Batavus</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Heer wy louen v al <rhyme label="a" type="m">ghelijck</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Ghy hebt vernielt des Zatans <rhyme label="a" type="m" corresp="#s1:l1">rijck</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Door v doot, ende lijden <rhyme label="b" type="m">swaer</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Syn wy verlost oock alle <rhyme label="b" type="m" corresp="#s1:l3">gaer</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Pharao, ws volckx <rhyme label="a" type="m">vyant</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Met al die van Egipten <rhyme label="a" type="m" corresp="#s2:l1">lant</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Sijn verdroncken in het <rhyme label="b" type="m">meer</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Door v cracht alleen, O <rhyme label="b" type="m" corresp="#s2:l3">Heer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Niet dat hy nu oock niet en <rhyme label="a" type="m">leeft</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Maer sulcke macht hy nu niet en <rhyme label="a" type="m" corresp="#s3:l1">heeft</rhyme></l>
        <l id="s3:l3" met="4" type="-+">In haer die wel in v <rhyme label="b" type="m">gelooft</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Hebt ghy hem gheknuest zijn <rhyme label="b" type="m" corresp="#s3:l3">hooft</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ghy hebt hem Heere dat <rhyme label="a" type="m">beledt</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Den gheenen die wandelt uwen <rhyme label="a" type="m" corresp="#s4:l1">wedt</rhyme></l>
        <l id="s4:l3" met="4" type="-+">En can hy schaden met zijn <rhyme label="b" type="m">fenijn</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Meer als wy consenterende <rhyme label="b" type="m" corresp="#s4:l3">zijn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Na dat Israel wt Egipten <rhyme label="a" type="m">quam</rhyme></l>
        <l id="s5:l2" met="4" type="-+">En hadden ghegeten haer <rhyme label="a" type="m" corresp="#s5:l1">Paeslam</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Opten vijftichsten daghen <rhyme label="b" type="m">neth</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Gaf God door Moyses haer den <rhyme label="b" type="m" corresp="#s5:l3">weth</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Tot danckbaerheyt van dit Gods <rhyme label="a" type="m">feyt</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Vierden zy iaerlijckx met <rhyme label="a" type="m" corresp="#s6:l1">weerdicheyt</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Het vijftichste iaer worde oock groot <rhyme label="b" type="m">geacht</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Alle schulden zijn dan weder <rhyme label="b" type="m" corresp="#s6:l3">gebracht</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Den gheuanghenen die lietmen dan <rhyme label="a" type="m">vry</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Maer o Heer, wat verstaetmen daer <rhyme label="a" type="m" corresp="#s7:l1">by</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Dit was de figuere, ende <rhyme label="b" type="m">voorbeelt</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Maer ons nu dese waerheyt voor oogen <rhyme label="b" type="m" corresp="#s7:l3">speelt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Nu op onsen vijftichsten <rhyme label="a" type="m">dach</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Worden v vrienden wat anders <rhyme label="a" type="m" corresp="#s8:l1">ghewach</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Gheen letteren die ghy met vingeren <rhyme label="b" type="m">schreef</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Maer uwen Gheest die alle vreese <rhyme label="b" type="m" corresp="#s8:l3">verdreef</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">V eersten weth quam met vreese <rhyme label="a" type="m">voort</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Want blixem, en donder word daer <rhyme label="a" type="m" corresp="#s9:l1">ghehoort</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Maer nu coemt uwen weth <rhyme label="b" type="m">bemint</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Door t’geluyt als eenen <rhyme label="b" type="m" corresp="#s9:l3">wint</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">O hoe zoeten geluyt gaf <rhyme label="a" type="m">dat</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Als vierighe tonghen hy op haer <rhyme label="a" type="m" corresp="#s10:l1">sadt</rhyme></l>
        <l id="s10:l3" met="4" type="-+">V gheest O Heere die quam zoo <rhyme label="b" type="m">zoet</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Op v vrienden met <rhyme label="b" type="m" corresp="#s10:l3">ootmoet</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">In een huys waren zy <rhyme label="a" type="m">vergaert</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Voor die Ioden zeer <rhyme label="a" type="m" corresp="#s11:l1">vervaert</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Hier hebt ghy uwen gheest <rhyme label="b" type="m">verspreyt</rhyme></l>
        <l id="s11:l4" met="4" type="-+">Soo ghy haer dat hebt toe <rhyme label="b" type="m" corresp="#s11:l3">geseyt</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Saer quam veel volckx door dit <rhyme label="a" type="m">geluyt</rhyme></l>
        <l id="s12:l2" met="4" type="-+">V Apostelen quamen daer toe <rhyme label="a" type="m" corresp="#s12:l1">wt</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Sy waren nu vroom ende wel <rhyme label="b" type="m">gemoet</rhyme></l>
        <l id="s12:l4" met="4" type="-+">Petrus haer een sermoen eerst <rhyme label="b" type="m" corresp="#s12:l3">doet</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Waer in dat hy bewees seer <rhyme label="a" type="m">claer</rhyme></l>
        <l id="s13:l2" met="4" type="-+">Dat Ihesus haeren Messias <rhyme label="a" type="m" corresp="#s13:l1">waer</rhyme></l>
        <l id="s13:l3" met="4" type="-+">Die met schanden ende <rhyme label="b" type="m">confuys</rhyme></l>
        <l id="s13:l4" met="4" type="-+">Hadden ghesonghen aen het <rhyme label="b" type="m" corresp="#s13:l3">cruys</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Daerom broeders sprack hy zeer <rhyme label="a" type="m">soet</rhyme></l>
        <l id="s14:l2" met="4" type="-+">Wil ick dat ghy penetentie <rhyme label="a" type="m" corresp="#s14:l1">doet</rhyme></l>
        <l id="s14:l3" met="4" type="-+">En wort ghedoopt tot <rhyme label="b" type="m">vergiffenis</rhyme></l>
        <l id="s14:l4" met="4" type="-+">Weet seecker dat Christus bermhertich <rhyme label="b" type="m" corresp="#s14:l3">is</rhyme></l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Dus spraecken d’Aposten <rhyme label="a" type="m">altemael</rhyme></l>
        <l id="s15:l2" met="4" type="-+">En een ijder natie hoorde zijn <rhyme label="a" type="m" corresp="#s15:l1">tael</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">Sy waren daer vergadert van wijt, ende <rhyme label="b" type="m">veer</rhyme></l>
        <l id="s15:l4" met="4" type="-+">En hoorden daer al haer spraeck, O <rhyme label="b" type="m" corresp="#s15:l3">Heer</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Die Parthen, Meden, en Elamiten <rhyme label="a" type="m">claer</rhyme></l>
        <l id="s16:l2" met="4" type="-+">De van Mesopotanien stonden <rhyme label="a" type="m" corresp="#s16:l1">daer</rhyme></l>
        <l id="s16:l3" met="4" type="-+">En noch veele volcken wt alle <rhyme label="b" type="m">lant</rhyme></l>
        <l id="s16:l4" met="4" type="-+">Dese verstonden alle desen <rhyme label="b" type="m" corresp="#s16:l3">Predicant</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Die daer zoo vierich heeft <rhyme label="a" type="m">gheleert</rhyme></l>
        <l id="s17:l2" met="4" type="-+">Dat daer drie duisent door zyn <rhyme label="a" type="m" corresp="#s17:l1">bekeert</rhyme></l>
        <l id="s17:l3" met="4" type="-+">Dus heeft Gods geest eerst daer <rhyme label="b" type="m">gewracht</rhyme></l>
        <l id="s17:l4" met="4" type="-+">En heeft zeer veel tot berou <rhyme label="b" type="m" corresp="#s17:l3">ghebracht</rhyme></l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Hier is Hohels Prophecye <rhyme label="a" type="m">vervult</rhyme></l>
        <l id="s18:l2" met="4" type="-+">Dat ghy uwen Gheest wt storten <rhyme label="a" type="m" corresp="#s18:l1">zult</rhyme></l>
        <l id="s18:l3" met="4" type="-+">Op alle vlesch alsomen hier <rhyme label="b" type="m">siet</rhyme></l>
        <l id="s18:l4" met="4" type="-+">Dit is op heden aldus <rhyme label="b" type="m" corresp="#s18:l3">gheschiet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">O Godt-saligh <rhyme label="a" type="m">Vader-landt</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Daer d'Heylighen in <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Hoe schoon, en hoe <rhyme label="a" type="m" corresp="#s1:l1">plaisant</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Is de Stadt Godts aen alle <rhyme label="c" type="m">kant</rhyme>;</l>
        <l id="s1:l5" met="3" type="-+">Haer suyver' straten <rhyme label="d" type="m">zyn</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Van lauter Goudt <rhyme label="b" type="f" corresp="#s1:l2">ghedreven</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Waer-langhs den Vrede <rhyme label="c" type="m" corresp="#s1:l4">gaet</rhyme></l>
        <l id="s1:l8" met="4" type="-+">Met den Olyf-tack in de <rhyme label="c" type="m" corresp="#s1:l4">handt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Hoe sal daer den lieven <rhyme label="a" type="m">sangh</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Van d'Enghels ons <rhyme label="b" type="f">verblyen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Wat spel, wat snaren <rhyme label="a" type="m" corresp="#s2:l1">klangh</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Wat Melody, wat vreught, wat <rhyme label="c" type="m">lof</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Wat Orghels, wat <rhyme label="d" type="m">Musieck</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Wat Luyten en <rhyme label="b" type="f" corresp="#s2:l2">Schalmyen</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Sal m'in-der <rhyme label="c" type="m" corresp="#s2:l4">eeuwigheydt</rhyme></l>
        <l id="s2:l8" met="4" type="-+">Aen-hooren in dat <rhyme label="c" type="m" corresp="#s2:l4">Hemels-hof</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Enghel wilt my metter <rhyme label="a" type="m">handt</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Langhs Jesus weghen <rhyme label="b" type="f">leyden</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Naer 't Hemels <rhyme label="a" type="m" corresp="#s3:l1">Vader-landt</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Al-waer-men loont de deught met <rhyme label="c" type="m">vreught</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Op dat myn' Ziel haer <rhyme label="d" type="m">soo</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Met u tot alle <rhyme label="b" type="f" corresp="#s3:l2">tyden</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Verdroncken in de <rhyme label="c" type="m" corresp="#s3:l4">vreught</rhyme></l>
        <l id="s3:l8" met="4" type="-+">Met Godt, in Godt, door Godt <rhyme label="c" type="m" corresp="#s3:l4">verheught</rhyme>.</l>
      </lg>
    </lg>
  </text>

  <author>Willem Sluiter</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">LAat de wereldt, los van <rhyme label="a" type="f">sinne</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Singen, met veel lust en <rhyme label="b" type="m">Vreugd</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Van onkuische liefd' en <rhyme label="a" type="f" corresp="#s1:l1">minne</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Tot bekooring van de <rhyme label="b" type="m" corresp="#s1:l2">Jeugt</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">Ik hebb' al soo groot <rhyme label="c" type="f">verlangen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Dat ik, met een kuisch <rhyme label="d" type="m">gemoet</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">U mijn Vreugt- en Liefde <rhyme label="c" type="f" corresp="#s1:l5">Sangen</rhyme></l>
        <l id="s1:l8" met="4" type="+-">Steets toesingen mag soo <rhyme label="d" type="m" corresp="#s1:l6">soet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">'k Sal met lust en yver <rhyme label="a" type="f">hellen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Om u, als een reine <rhyme label="b" type="m">maagt</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Eenen manne voor te <rhyme label="a" type="f" corresp="#s2:l1">stellen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Dat gy hem alleen <rhyme label="b" type="m" corresp="#s2:l2">behaagt</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Christo, die u heeft <rhyme label="c" type="f">verkoren</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Tot sijn Bruidt, en eens voor <rhyme label="d" type="m">al</rhyme></l>
        <l id="s2:l7" met="4" type="+-">Liefd' en trouw heeft <rhyme label="c" type="f" corresp="#s2:l5">toegeswooren</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Die hem noyt berouwen <rhyme label="d" type="m" corresp="#s2:l6">sal</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Lieft en looft hem 't allen <rhyme label="a" type="f">tijden</rhyme>;</l>
        <l id="s3:l2" met="4" type="+-">Acht hem hoog, en wacht op <rhyme label="b" type="m">hem</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Op dat ik my magh <rhyme label="a" type="f" corresp="#s3:l1">verblijden</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Om des Bruidgoms lieve <rhyme label="b" type="m" corresp="#s3:l2">stem</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Daar hy selve sijn <rhyme label="c" type="f">vriendinne</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Soet mee toespreekt en <rhyme label="d" type="m">ontfangt</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Als sy hem, uit suivre <rhyme label="c" type="f" corresp="#s3:l5">minne</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">In den Geest soo vast aan <rhyme label="d" type="m" corresp="#s3:l6">hangt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Welk is onse hoop of <rhyme label="a" type="f">vreugde</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Onse roem of <rhyme label="b" type="m">eere-kroon</rhyme> ?</l>
        <l id="s4:l3" met="4" type="+-">Gy, soo gy u schikt ter <rhyme label="a" type="f" corresp="#s4:l1">deugde</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Gy, voor Jesus glori <rhyme label="b" type="m" corresp="#s4:l2">throon</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">'k Wil geen ander roem <rhyme label="c" type="f">begeeren</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Dan dat ick slechts in dien <rhyme label="d" type="m">dagh</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">In de toekomst onses <rhyme label="c" type="f" corresp="#s4:l5">Heeren</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Over u my roemen <rhyme label="d" type="m" corresp="#s4:l6">magh</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Loons genoeg hebb' ik te <rhyme label="a" type="f">hopen</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Soo 'k dan sie, hoe 'k niet om <rhyme label="b" type="m">niet</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Hebb' gearbeidt noch <rhyme label="a" type="f" corresp="#s5:l1">geloopen</rhyme>.</l>
        <l id="s5:l4" met="4" type="+-">Hierom acht ik geen <rhyme label="b" type="m" corresp="#s5:l2">verdriet</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Noch geen moeijelijcke <rhyme label="c" type="f">dingen</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Als ik mijnen dienst <rhyme label="d" type="m">alleen</rhyme></l>
        <l id="s5:l7" met="4" type="+-">Mag met vrolikheit <rhyme label="c" type="f" corresp="#s5:l5">volbringen</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">En met vreucht aan u <rhyme label="d" type="m" corresp="#s5:l6">besteen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Soo dan, mijn cieraat en <rhyme label="a" type="f">eere</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Mijn gewenschte Broeders <rhyme label="b" type="m">t'saam</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Staat alsoo doch in den <rhyme label="a" type="f" corresp="#s6:l1">Heere</rhyme>.</l>
        <l id="s6:l4" met="4" type="+-">Lijdt en strijdt om Jesus <rhyme label="b" type="m" corresp="#s6:l2">naam</rhyme>.</l>
        <l id="s6:l5" met="4" type="+-">Laat u noit van 't goe <rhyme label="c" type="f">verhinderen</rhyme>.</l>
        <l id="s6:l6" met="4" type="+-">Ik en hebb' geen meerder <rhyme label="d" type="m">vreugt</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">Als dat gy, mijn waarde <rhyme label="c" type="f" corresp="#s6:l5">kindren</rhyme>,</l>
        <l id="s6:l8" met="4" type="+-">In de waarheit wandlen <rhyme label="d" type="m" corresp="#s6:l6">meugt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Hoe sou 't anders wesen <rhyme label="a" type="f">konnen</rhyme> ?</l>
        <l id="s7:l2" met="4" type="+-">Mits ik al mijn tijt en <rhyme label="b" type="m">vlijt</rhyme></l>
        <l id="s7:l3" met="4" type="+-">Slechts aan u begeer te <rhyme label="a" type="f" corresp="#s7:l1">gonnen</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Die my aanbevolen <rhyme label="b" type="m" corresp="#s7:l2">zijt</rhyme>.</l>
        <l id="s7:l5" met="4" type="+-">Die 'k uit liefd' ook, als een <rhyme label="c" type="f">vader</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Sijne kindren, troost' en <rhyme label="d" type="m">sticht'</rhyme>.</l>
        <l id="s7:l7" met="4" type="+-">Daar ik schatten voor <rhyme label="c" type="f" corresp="#s7:l5">vergader</rhyme></l>
        <l id="s7:l8" met="4" type="+-">Door een vaderlijke <rhyme label="d" type="m" corresp="#s7:l6">plicht</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">'k Soek u alle rijk te <rhyme label="a" type="f">maken</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Niet met schatten deser <rhyme label="b" type="m">aard</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Die door my en mijne <rhyme label="a" type="f" corresp="#s8:l1">saken</rhyme></l>
        <l id="s8:l4" met="4" type="+-">Nimmer sullen zijn <rhyme label="b" type="m" corresp="#s8:l2">vergaart</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Maar met geestelijke <rhyme label="c" type="f">gaven</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Die men van den hemel <rhyme label="d" type="m">erft</rhyme>,</l>
        <l id="s8:l7" met="4" type="+-">Die begeer'ge zielen <rhyme label="c" type="f" corresp="#s8:l5">laven</rhyme>;</l>
        <l id="s8:l8" met="4" type="+-">Die men mee draagt als men <rhyme label="d" type="m" corresp="#s8:l6">sterft</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Helpt my Christus <rhyme label="a" type="f">Koninckrijke</rhyme></l>
        <l id="s9:l2" met="4" type="+-">Steeds verbreiden <rhyme label="b" type="m">over-al</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Dat uw aanwas klaarlik <rhyme label="a" type="f" corresp="#s9:l1">blijke</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Soo in yver als <rhyme label="b" type="m" corresp="#s9:l2">getal</rhyme>.</l>
        <l id="s9:l5" met="4" type="+-">Helpt my t'saam, als <rhyme label="c" type="f">onverdriet'gen</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">Satans helsche rijk en <rhyme label="d" type="m">macht</rhyme></l>
        <l id="s9:l7" met="4" type="+-">Door uw tegenstant <rhyme label="c" type="f" corresp="#s9:l5">verniet'gen</rhyme>,</l>
        <l id="s9:l8" met="4" type="+-">Altijt nuchter op uw <rhyme label="d" type="m" corresp="#s9:l6">wacht</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Wandelt na den rechten <rhyme label="a" type="f">regel</rhyme></l>
        <l id="s10:l2" met="4" type="+-">Onser ingedrukte <rhyme label="b" type="m">leer</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">En zijt my alsoo het <rhyme label="a" type="f" corresp="#s10:l1">zegel</rhyme></l>
        <l id="s10:l4" met="4" type="+-">Mijner roeping in den <rhyme label="b" type="m" corresp="#s10:l2">Heer</rhyme>.</l>
        <l id="s10:l5" met="4" type="+-">Daar wat goets door my geplant <rhyme label="c" type="f">is</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">En veel quaats is wech <rhyme label="d" type="m">geruimt</rhyme>,</l>
        <l id="s10:l7" met="4" type="+-">Siet men, dat Godts eigen hant <rhyme label="c" type="f" corresp="#s10:l5">is</rhyme>,</l>
        <l id="s10:l8" met="4" type="+-">En mijn ampt niet is <rhyme label="d" type="m" corresp="#s10:l6">versuimt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Draagt bekering-weerdge <rhyme label="a" type="f">vruchten</rhyme>;</l>
        <l id="s11:l2" met="4" type="+-">Soo doe ik met vreugde 't <rhyme label="b" type="m">mijn</rhyme>.</l>
        <l id="s11:l3" met="4" type="+-">Doe ik 't met verdriet en <rhyme label="a" type="f" corresp="#s11:l1">suchten</rhyme>,</l>
        <l id="s11:l4" met="4" type="+-">Dat zal u niet nuttig <rhyme label="b" type="m" corresp="#s11:l2">zijn</rhyme>.</l>
        <l id="s11:l5" met="4" type="+-">Ben ik droevig en <rhyme label="c" type="f">verslagen</rhyme>,</l>
        <l id="s11:l6" met="4" type="+-">'k Ben dan ook min <rhyme label="d" type="m">toegerust</rhyme></l>
        <l id="s11:l7" met="4" type="+-">Om veel goets u voor te <rhyme label="c" type="f" corresp="#s11:l5">dragen</rhyme>,</l>
        <l id="s11:l8" met="4" type="+-">En de geest wordt <rhyme label="d" type="m" corresp="#s11:l6">uitgeblust</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">O dan, laat ons, waar wy <rhyme label="a" type="f">meugen</rhyme>,</l>
        <l id="s12:l2" met="4" type="+-">Doch malkander, dag by <rhyme label="b" type="m">dag</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">Soo verquikken en <rhyme label="a" type="f" corresp="#s12:l1">verheugen</rhyme>,</l>
        <l id="s12:l4" met="4" type="+-">Dat ons' herte juich' en <rhyme label="b" type="m" corresp="#s12:l2">lacch'</rhyme>;</l>
        <l id="s12:l5" met="4" type="+-">Dat wy God met <rhyme label="c" type="f">zegeklanken</rhyme>,</l>
        <l id="s12:l6" met="4" type="+-">Altijt even frisch en <rhyme label="d" type="m">bly</rhyme>,</l>
        <l id="s12:l7" met="4" type="+-">Onderlinge mogen <rhyme label="c" type="f" corresp="#s12:l5">dancken</rhyme>,</l>
        <l id="s12:l8" met="4" type="+-">Ik voor u, en gy voor <rhyme label="d" type="m" corresp="#s12:l6">my</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">'k Hebb' u lief, en moet u <rhyme label="a" type="f">prijsen</rhyme>,</l>
        <l id="s13:l2" met="4" type="+-">Om uw liefd' en <rhyme label="b" type="m">vriendlikheit</rhyme>,</l>
        <l id="s13:l3" met="4" type="+-">Die gy my soeckt te <rhyme label="a" type="f" corresp="#s13:l1">bewijsen</rhyme>,</l>
        <l id="s13:l4" met="4" type="+-">Soo gewilligh en <rhyme label="b" type="m" corresp="#s13:l2">bereit</rhyme>.</l>
        <l id="s13:l5" met="4" type="+-">Maar u lust om 't woordt te <rhyme label="c" type="f">hooren</rhyme>,</l>
        <l id="s13:l6" met="4" type="+-">En het blijkelijk <rhyme label="d" type="m">bewijs</rhyme></l>
        <l id="s13:l7" met="4" type="+-">Dat gy daar door zijt <rhyme label="c" type="f" corresp="#s13:l5">herbooren</rhyme>,</l>
        <l id="s13:l8" met="4" type="+-">Is mijn soetste drank en <rhyme label="d" type="m" corresp="#s13:l6">spijs</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">Wilt gy my genoegen <rhyme label="a" type="f">geven</rhyme>,</l>
        <l id="s14:l2" met="4" type="+-">Doet dan met mijn dienst <rhyme label="b" type="m">profijt</rhyme>;</l>
        <l id="s14:l3" met="4" type="+-">'t Geeft my als een nieuwe <rhyme label="a" type="f" corresp="#s14:l1">leven</rhyme>,</l>
        <l id="s14:l4" met="4" type="+-">Soo gy nieuwe schepsels <rhyme label="b" type="m" corresp="#s14:l2">zijt</rhyme>.</l>
        <l id="s14:l5" met="4" type="+-">Wat ik soeck, en meest <rhyme label="c" type="f">begere</rhyme>,</l>
        <l id="s14:l6" met="4" type="+-">Is niet uw <rhyme label="d" type="m">lieftaligheit</rhyme>,</l>
        <l id="s14:l7" met="4" type="+-">Maar insonderheit Godts <rhyme label="c" type="f" corresp="#s14:l5">eere</rhyme>,</l>
        <l id="s14:l8" met="4" type="+-">En uw eigen <rhyme label="d" type="m" corresp="#s14:l6">saligheit</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="+-">Bidt, dat Godt my wil <rhyme label="a" type="f">verstercken</rhyme>,</l>
        <l id="s15:l2" met="4" type="+-">En door sijnen Geest <rhyme label="b" type="m">voortaan</rhyme></l>
        <l id="s15:l3" met="4" type="+-">Soo geweldich <rhyme label="a" type="f" corresp="#s15:l1">medewerken</rhyme>,</l>
        <l id="s15:l4" met="4" type="+-">Dat uw herten open <rhyme label="b" type="m" corresp="#s15:l2">gaan</rhyme>.</l>
        <l id="s15:l5" met="4" type="+-">Hy moet selfs u <rhyme label="c" type="f">overtuigen</rhyme>,</l>
        <l id="s15:l6" met="4" type="+-">Als van ons iet wert <rhyme label="d" type="m">geseit</rhyme>,</l>
        <l id="s15:l7" met="4" type="+-">Ja verstant en wille <rhyme label="c" type="f" corresp="#s15:l5">buigen</rhyme></l>
        <l id="s15:l8" met="4" type="+-">Tot geloofs <rhyme label="d" type="m" corresp="#s15:l6">gehoorsaamheit</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="+-">Laat ons Godt alhier soo <rhyme label="a" type="f">loven</rhyme>,</l>
        <l id="s16:l2" met="4" type="+-">Dat wy namaals sijnen <rhyme label="b" type="m">naam</rhyme></l>
        <l id="s16:l3" met="4" type="+-">Ook verheerliken daar <rhyme label="a" type="f" corresp="#s16:l1">boven</rhyme>,</l>
        <l id="s16:l4" met="4" type="+-">Met veel duisend Englen t' <rhyme label="b" type="m" corresp="#s16:l2">saam</rhyme>.</l>
        <l id="s16:l5" met="4" type="+-">Daar het alles, sonder <rhyme label="c" type="f">vreesen</rhyme>,</l>
        <l id="s16:l6" met="4" type="+-">Sonder moeit of <rhyme label="d" type="m">arrebeit</rhyme>,</l>
        <l id="s16:l7" met="4" type="+-">Vreugt-en LiefdeSang sal <rhyme label="c" type="f" corresp="#s16:l5">wesen</rhyme></l>
        <l id="s16:l8" met="4" type="+-">In der eeuwen <rhyme label="d" type="m" corresp="#s16:l6">eeuwigheit</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

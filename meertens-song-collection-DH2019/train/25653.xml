    <melody>Gij nijders kwaad van doen</melody>
    <categories>
      <category translation="formal genres">formele genres</category>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Leenaert Clock</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Int herte wilt <rhyme label="a" type="f">verblijden</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Singht vistorijs <rhyme label="b" type="m">jolijt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Vrienden nu in dees <rhyme label="a" type="f" corresp="#s1:l1">tijden</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Onsen vyandt tot <rhyme label="b" type="m" corresp="#s1:l2">spijt</rhyme></l>
        <l id="s1:l5" met="4" type="+-">Vyert, ontsteeckt der liefden <rhyme label="c" type="m">brandt</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Het licht schijn in’t gantsche <rhyme label="c" type="m" corresp="#s1:l5">Landt</rhyme>,</l>
        <l id="s1:l7" met="5" type="-+">Des vredens Vorste, dit ons doet <rhyme label="c" type="m" corresp="#s1:l5">bystandt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ons laet by u <rhyme label="a" type="f">vergaren</rhyme></l>
        <l id="s2:l2" met="3" type="-+">In sijnen vrede <rhyme label="b" type="m">soet</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Die voormaels beangst <rhyme label="a" type="f" corresp="#s2:l1">waren</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Door onverstant <rhyme label="b" type="m" corresp="#s2:l2">onvroet</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Sijnen harden jammer <rhyme label="c" type="m">slach</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Brack ons t’hert dennen <rhyme label="c" type="m" corresp="#s2:l5">dach</rhyme>,</l>
        <l id="s2:l7" met="5" type="-+">Soo men door d’uytgestorte tranen <rhyme label="c" type="m" corresp="#s2:l5">sach</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Voor Godt neder <rhyme label="a" type="f">ghebooghen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Ghedanckt met stemmen <rhyme label="b" type="m">mondt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Met vreuchd’ weenende <rhyme label="a" type="f" corresp="#s3:l1">nooghen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Vertoont elcx herten <rhyme label="b" type="m" corresp="#s3:l2">grondt</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Gheneghen tot <rhyme label="c" type="m">eenicheyt</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Als vreedlievende <rhyme label="c" type="m" corresp="#s3:l5">bereyt</rhyme>,</l>
        <l id="s3:l7" met="5" type="-+">Gegheven hant en mont met goet <rhyme label="c" type="m" corresp="#s3:l5">bescheyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Christelijk t’samen <rhyme label="a" type="f">verbonden</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Vast met des vredens <rhyme label="b" type="m">bandt</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Laet ons nu t’allen <rhyme label="a" type="f" corresp="#s4:l1">stonden</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Door desen <rhyme label="b" type="m" corresp="#s4:l2">onderpandt</rhyme></l>
        <l id="s4:l5" met="4" type="+-">Vast houden t’nieuwe <rhyme label="c" type="m">ghebodt</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Wie sulcks doet, die is uyt <rhyme label="c" type="m" corresp="#s4:l5">Godt</rhyme>,</l>
        <l id="s4:l7" met="5" type="-+">Het dient vercoren voor het beste <rhyme label="c" type="m" corresp="#s4:l5">lot</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Kinder Gods <rhyme label="a" type="f">altesamen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Die wel met my <rhyme label="b" type="m">betracht</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Dat elck nae sijn <rhyme label="a" type="f" corresp="#s5:l1">betamen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Wil houden goede <rhyme label="b" type="m" corresp="#s5:l2">wacht</rhyme></l>
        <l id="s5:l5" met="4" type="+-">Teghens den vyandt seer <rhyme label="c" type="m">quaet</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Die ghestadich om ons <rhyme label="c" type="m" corresp="#s5:l5">gaet</rhyme>,</l>
        <l id="s5:l7" met="5" type="-+">Om ons te vernielen vroech ende <rhyme label="c" type="m" corresp="#s5:l5">laet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">En hy soeckt te <rhyme label="a" type="f">beroven</rhyme></l>
        <l id="s6:l2" met="3" type="-+">T’goede begonnen <rhyme label="b" type="m">werck</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Maer door crachte van <rhyme label="a" type="f" corresp="#s6:l1">boven</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Sult ghy hem zijn te <rhyme label="b" type="m" corresp="#s6:l2">sterck</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Houdt u vast by den <rhyme label="c" type="m">Hooftman</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Die all’ dinck verwinnen <rhyme label="c" type="m" corresp="#s6:l5">can</rhyme>,</l>
        <l id="s6:l7" met="5" type="-+">Ghy sult ooc verwinnen, wijct niet daer <rhyme label="c" type="m" corresp="#s6:l5">van</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Vertoont met daedt en <rhyme label="a" type="f">reden</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Als kinder nieu <rhyme label="b" type="m">ghebaert</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">T’wesen der Christi <rhyme label="a" type="f" corresp="#s7:l1">leden</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Nae Goddelijcker <rhyme label="b" type="m" corresp="#s7:l2">aerdt</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Voecht u t’samen wel <rhyme label="c" type="m">ghesint</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Verbonden met Gods <rhyme label="c" type="m" corresp="#s7:l5">verbont</rhyme>,</l>
        <l id="s7:l7" met="5" type="-+">Laet het licht blijcken, ende werden <rhyme label="c" type="m" corresp="#s7:l5">cont</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">En houdtse soo Gods <rhyme label="a" type="f">gheboden</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Wandelt nae sijn <rhyme label="b" type="m">bevel</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Al wat u is van <rhyme label="a" type="f" corresp="#s8:l1">nooden</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Sal vermeerderen <rhyme label="b" type="m" corresp="#s8:l2">snel</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Vreed’ sal in u palen <rhyme label="c" type="m">zijn</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Ghy sult slapen, rusten <rhyme label="c" type="m" corresp="#s8:l5">fijn</rhyme>,</l>
        <l id="s8:l7" met="5" type="-+">Vallen sullen alle vyanden <rhyme label="c" type="m" corresp="#s8:l5">dijn</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Rechtveerdichen met <rhyme label="a" type="f">spoedich</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Elckanderen tot <rhyme label="b" type="m">last</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Houdt u liever <rhyme label="a" type="f" corresp="#s9:l1">ootmoedich</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Soo blijft den vrede <rhyme label="b" type="m" corresp="#s9:l2">vast</rhyme>,</l>
        <l id="s9:l5" met="4" type="+-">Gheeft liever van t’uwe <rhyme label="c" type="m">milt</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">Dan dat ghy nnoch hebben <rhyme label="c" type="m" corresp="#s9:l5">wilt</rhyme></l>
        <l id="s9:l7" met="5" type="-+">Eens anders, daer me wordt onvre <rhyme label="c" type="m" corresp="#s9:l5">ghestilt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">T’sal zijn Gods <rhyme label="a" type="f">wel-behaghen</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Soo ghy den vrede <rhyme label="b" type="m">goet</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Soo neerstich doet <rhyme label="a" type="f" corresp="#s10:l1">naejaeghen</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Met een Christlijck <rhyme label="b" type="m" corresp="#s10:l2">ghemoet</rhyme>,</l>
        <l id="s10:l5" met="4" type="+-">Ghelijck Christus Iesus <rhyme label="c" type="m">de</rhyme></l>
        <l id="s10:l6" met="4" type="+-">Om ons te verwerven <rhyme label="c" type="m" corresp="#s10:l5">vre</rhyme>,</l>
        <l id="s10:l7" met="5" type="-+">Och lockt soo elcken om te comen <rhyme label="c" type="m" corresp="#s10:l5">me</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Seer beminde <rhyme label="a" type="f">ghepresen</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Neemt dit in danck van <rhyme label="b" type="m">my</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">V vreed-lievende <rhyme label="a" type="f" corresp="#s11:l1">wesen</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Vertoont met moede <rhyme label="b" type="m" corresp="#s11:l2">bly</rhyme>,</l>
        <l id="s11:l5" met="4" type="+-">Deed’ my doen dit cleyn <rhyme label="c" type="m">vermaen</rhyme></l>
        <l id="s11:l6" met="4" type="+-">Aen u, wilt het recht <rhyme label="c" type="m" corresp="#s11:l5">verstaen</rhyme>,</l>
        <l id="s11:l7" met="5" type="-+">Want het uyt reynder liefden is <rhyme label="c" type="m" corresp="#s11:l5">ghedaen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

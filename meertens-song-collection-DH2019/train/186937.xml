    <melody>Si vous ne voulez me guérir</melody>
  <author>Jan van Hoogstraten</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Nu zal geen zugt, of drift <rhyme label="a" type="m">voortaan</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Om 's werrelts ydlen roem te <rhyme label="b" type="f">zingen</rhyme>,</l>
        <l id="s1:l3" met="3" type="+-">My in 't harte <rhyme label="b" type="f" corresp="#s1:l2">dringen</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">Of de luyt doen <rhyme label="a" type="m" corresp="#s1:l1">slaan</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">ô Neen; mijn geest van edler <rhyme label="c" type="m">vyer</rhyme></l>
        <l id="s1:l6" met="5" type="-+">Ontsteeken, stelt de snaren van mijn <rhyme label="c" type="m" corresp="#s1:l5">Lier</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Op aangenamer <rhyme label="d" type="m">stof</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">En zingt des Heeren <rhyme label="d" type="m" corresp="#s1:l7">Lof</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wie, Heer, uw huisvloer mag <rhyme label="a" type="m">betreen</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Voelt zig van hemelspijz <rhyme label="b" type="f">verzaden</rhyme>,</l>
        <l id="s2:l3" met="3" type="+-">En erft uw <rhyme label="b" type="f" corresp="#s2:l2">genaden</rhyme></l>
        <l id="s2:l4" met="3" type="+-">Door alle eewen <rhyme label="a" type="m" corresp="#s2:l1">heen</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">Hy schrikt noit, hoe de helhond <rhyme label="c" type="m">baft</rhyme>,</l>
        <l id="s2:l6" met="5" type="-+">Wiens ziel zig bind aan uwe liefde <rhyme label="c" type="m" corresp="#s2:l5">vast</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">En uw genad' <rhyme label="d" type="m">altaar</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Omhelst in doods <rhyme label="d" type="m" corresp="#s2:l7">gevaar</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Wel hem, die van uw hand <rhyme label="a" type="m">gesterkt</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Zig op die hulpe mag <rhyme label="b" type="f">verlaten</rhyme>,</l>
        <l id="s3:l3" met="3" type="+-">En al 't aardse <rhyme label="b" type="f" corresp="#s3:l2">haten</rhyme></l>
        <l id="s3:l4" met="3" type="+-">Dat elx onheil <rhyme label="a" type="m" corresp="#s3:l1">werkt</rhyme>.</l>
        <l id="s3:l5" met="4" type="-+">Zulk een (wat hem alhier <rhyme label="c" type="m">ontmoet</rhyme>)</l>
        <l id="s3:l6" met="5" type="-+">Leeft, tot uw eer, gerust in <rhyme label="c" type="m" corresp="#s3:l5">tegenspoed</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">En word, na zijne <rhyme label="d" type="m">dood</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">ô Heer! uw <rhyme label="d" type="m" corresp="#s3:l7">Rijxgenoot</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Wie wil dan, om verganklijk <rhyme label="a" type="m">goed</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Dat nietig is, en van geen <rhyme label="b" type="f">waarde</rhyme>,</l>
        <l id="s4:l3" met="3" type="+-">Aan het stof der <rhyme label="b" type="f" corresp="#s4:l2">aarde</rhyme></l>
        <l id="s4:l4" met="3" type="+-">Binden zijn <rhyme label="a" type="m" corresp="#s4:l1">gemoed</rhyme>?</l>
        <l id="s4:l5" met="4" type="-+">Gods rijk in schoonheit <rhyme label="c" type="m">onbepaalt</rhyme>,</l>
        <l id="s4:l6" met="5" type="-+">Word door geen aardse weelde, of schat <rhyme label="c" type="m" corresp="#s4:l5">behaalt</rhyme>.</l>
        <l id="s4:l7" met="3" type="-+">Een ziel gehegt aan <rhyme label="d" type="m">d'aard</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Maakt zig Gods liefde <rhyme label="d" type="m" corresp="#s4:l7">onwaard</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

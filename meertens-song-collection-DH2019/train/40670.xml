  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">GOdt heeft u mensch <rhyme label="a" type="f">gheschapen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">En de wereldt van <rhyme label="b" type="m">niet</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Omdat ghy soudt <rhyme label="a" type="f" corresp="#s1:l1">gheraecken</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Tot t'Hemelsche <rhyme label="b" type="m" corresp="#s1:l2">joliet</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">V ziel sal altijdt <rhyme label="c" type="f">leven</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Maer 't lichaem eens <rhyme label="d" type="m">vergaet</rhyme>:</l>
        <l id="s1:l7" met="3" type="-+">Gheloof, Hop', Liefde <rhyme label="c" type="f" corresp="#s1:l5">gheven</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Hulp' teghen alle <rhyme label="d" type="m" corresp="#s1:l6">quaet</rhyme>.</l>
        <l id="s1:l9" met="1" type="-+">Mindt <rhyme label="e" type="m">Godt</rhyme>,</l>
        <l id="s1:l10" met="2" type="-+">Houdt sijn <rhyme label="e" type="m" corresp="#s1:l9">ghebodt</rhyme>,</l>
        <l id="s1:l11" met="3" type="+-">Hop't loon, vreest hellen <rhyme label="f" type="m">brandt</rhyme>,</l>
        <l id="s1:l12" met="3" type="-+">Och eeuwigh is soo <rhyme label="f" type="m" corresp="#s1:l11">lanck</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Een God in dry <rhyme label="a" type="f">persoonen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Ghelooft en oock hem <rhyme label="b" type="m">vreest</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Godt Vader, Godt den <rhyme label="a" type="f" corresp="#s2:l1">Sone</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En Godt den heylighen <rhyme label="b" type="m" corresp="#s2:l2">Gheest</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Even oudt, wijs ende <rhyme label="c" type="f">machtich</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Sijn sy, en even <rhyme label="d" type="m">goedt</rhyme>:</l>
        <l id="s2:l7" met="3" type="-+">Den Soon voor ons <rhyme label="c" type="f" corresp="#s2:l5">waerachtigh</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Heeft uytghestort sijn <rhyme label="d" type="m" corresp="#s2:l6">bloet</rhyme>.</l>
        <l id="s2:l9" met="1" type="-+">Mindt <rhyme label="e" type="m">Godt</rhyme>,</l>
        <l id="s2:l10" met="2" type="-+">Houdt sijn <rhyme label="e" type="m" corresp="#s2:l9">ghebodt</rhyme>,</l>
        <l id="s2:l11" met="3" type="+-">Hop't loon, vreest hellen <rhyme label="f" type="m">brandt</rhyme>,</l>
        <l id="s2:l12" met="3" type="-+">Och eeuwigh is soo <rhyme label="f" type="m" corresp="#s2:l11">lanck</rhyme>!</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Een Maghet was sijn <rhyme label="a" type="f">Moeder</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Hy stierf aen't Cruys de <rhyme label="b" type="m">doodt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">De Vaders als <rhyme label="a" type="f" corresp="#s3:l1">behoeder</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Trock hy uyt s'hellen <rhyme label="b" type="m" corresp="#s3:l2">noot</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Van daer is hy <rhyme label="c" type="f">verresen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Hy klom tot s'Hemels <rhyme label="d" type="m">throon</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Ten joncksten dagh sal hy <rhyme label="c" type="f" corresp="#s3:l5">wesen</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Rechter en gheven <rhyme label="d" type="m" corresp="#s3:l6">loon</rhyme>.</l>
        <l id="s3:l9" met="1" type="-+">Mindt <rhyme label="e" type="m">Godt</rhyme>,</l>
        <l id="s3:l10" met="2" type="-+">Houdt sijn <rhyme label="e" type="m" corresp="#s3:l9">ghebodt</rhyme>,</l>
        <l id="s3:l11" met="3" type="+-">Hop't loon, vreest hellen <rhyme label="f" type="m">brandt</rhyme>,</l>
        <l id="s3:l12" met="3" type="-+">Och eeuwigh is soo <rhyme label="f" type="m" corresp="#s3:l11">lanck</rhyme>!</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ghelooft de Roomsche <rhyme label="a" type="f">Kercke</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Die door belijders <rhyme label="b" type="m">bloedt</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Schriftuer en wonder <rhyme label="a" type="f" corresp="#s4:l1">wercken</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Staet vast en blijft <rhyme label="b" type="m" corresp="#s4:l2">behoedt</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Hier vloeden uyt de <rhyme label="c" type="f">wonden</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Van Christus klaer <rhyme label="d" type="m">fonteyn</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Vergiffenis der <rhyme label="c" type="f" corresp="#s4:l5">sonden</rhyme>:</l>
        <l id="s4:l8" met="3" type="-+">Verdiensten in't <rhyme label="d" type="m" corresp="#s4:l6">ghemeyn</rhyme>.</l>
        <l id="s4:l9" met="1" type="-+">Mindt <rhyme label="e" type="m">Godt</rhyme>,</l>
        <l id="s4:l10" met="2" type="-+">Houdt sijn <rhyme label="e" type="m" corresp="#s4:l9">ghebodt</rhyme>,</l>
        <l id="s4:l11" met="3" type="+-">Hop't loon, vreest hellen <rhyme label="f" type="m">brandt</rhyme>,</l>
        <l id="s4:l12" met="3" type="-+">Och eeuwigh is soo <rhyme label="f" type="m" corresp="#s4:l11">lanck</rhyme>!</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">V lichaem sal <rhyme label="a" type="f">verrijsen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">En vander doodt <rhyme label="b" type="m">opstaen</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">En naer des deughts uyt <rhyme label="a" type="f" corresp="#s5:l1">wijsen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">In't eeuwich leven <rhyme label="b" type="m" corresp="#s5:l2">gaen</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Oft sal om sonden <rhyme label="c" type="f">daelen</rhyme></l>
        <l id="s5:l6" met="3" type="-+">In't vyer dat altijdt <rhyme label="d" type="m">brandt</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Dient dan Godt, soeckt te <rhyme label="c" type="f" corresp="#s5:l5">halen</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Der Heylighen <rhyme label="d" type="m" corresp="#s5:l6">bystant</rhyme>.</l>
        <l id="s5:l9" met="1" type="-+">Mindt <rhyme label="e" type="m">Godt</rhyme>,</l>
        <l id="s5:l10" met="2" type="-+">Houdt sijn <rhyme label="e" type="m" corresp="#s5:l9">ghebodt</rhyme>,</l>
        <l id="s5:l11" met="3" type="+-">Hop't loon, vreest hellen <rhyme label="f" type="m">brandt</rhyme>,</l>
        <l id="s5:l12" met="3" type="-+">Och eeuwigh is soo <rhyme label="f" type="m" corresp="#s5:l11">lanck</rhyme>!</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Voor al mindt Godt den <rhyme label="a" type="f">Heere</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">En sweert niet <rhyme label="b" type="m">yderlijck</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Den sondagh suldy <rhyme label="a" type="f" corresp="#s6:l1">eeren</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Met deughden <rhyme label="b" type="m" corresp="#s6:l2">heylighlijck</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">U ouders sult ghy <rhyme label="c" type="f">eeren</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">En slaet oock niemandt <rhyme label="d" type="m">doot</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">V van oncuysheydt <rhyme label="c" type="f" corresp="#s6:l5">keeren</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Steelt niet al zijde <rhyme label="d" type="m" corresp="#s6:l6">bloodt</rhyme>.</l>
        <l id="s6:l9" met="1" type="-+">Mindt <rhyme label="e" type="m">Godt</rhyme>,</l>
        <l id="s6:l10" met="2" type="-+">Houdt sijn <rhyme label="e" type="m" corresp="#s6:l9">ghebodt</rhyme>,</l>
        <l id="s6:l11" met="3" type="+-">Hop't loon, vreest hellen <rhyme label="f" type="m">brandt</rhyme>,</l>
        <l id="s6:l12" met="3" type="-+">Och eeuwigh is soo <rhyme label="f" type="m" corresp="#s6:l11">lanck</rhyme>!</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">En gheeft gheen valsche <rhyme label="a" type="f">ghetuyghen</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Soeckt niemandts bedde <rhyme label="b" type="m">ghenoot</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Wacht u van t'hert te <rhyme label="a" type="f" corresp="#s7:l1">buyghen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Tot vremt goedt kleyn oft <rhyme label="b" type="m" corresp="#s7:l2">groot</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Dus soeckt ghy s'Hemels <rhyme label="c" type="f">vrede</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Bemindt den Heer u <rhyme label="d" type="m">Godt</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Bemindt u naesten <rhyme label="c" type="f" corresp="#s7:l5">mede</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Dits den Gheboden <rhyme label="d" type="m" corresp="#s7:l6">slot</rhyme>.</l>
        <l id="s7:l9" met="1" type="-+">Mindt <rhyme label="e" type="m">Godt</rhyme>,</l>
        <l id="s7:l10" met="2" type="-+">Houdt sijn <rhyme label="e" type="m" corresp="#s7:l9">ghebodt</rhyme>,</l>
        <l id="s7:l11" met="3" type="+-">Hop't loon, vreest hellen <rhyme label="f" type="m">brandt</rhyme>,</l>
        <l id="s7:l12" met="3" type="-+">Och eeuwigh is soo <rhyme label="f" type="m" corresp="#s7:l11">lanck</rhyme>!</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Hout oock't Ghebodt der <rhyme label="a" type="f">Kercken</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">En werckt des Feest-daeghs <rhyme label="b" type="m">niet</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Hoort Misse met goedt <rhyme label="a" type="f" corresp="#s8:l1">aenmercken</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Vast als sy't u <rhyme label="b" type="m" corresp="#s8:l2">ghebiedt</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Eens s'jaers biecht al u <rhyme label="c" type="f">sonden</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Te Paesschen hoogh-tijdt <rhyme label="d" type="m">houdt</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">En hoort naer mijn <rhyme label="c" type="f" corresp="#s8:l5">verconden</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Elckx Sacraments <rhyme label="d" type="m" corresp="#s8:l6">inhoudt</rhyme>.</l>
        <l id="s8:l9" met="1" type="-+">Mindt <rhyme label="e" type="m">Godt</rhyme>,</l>
        <l id="s8:l10" met="2" type="-+">Houdt sijn <rhyme label="e" type="m" corresp="#s8:l9">ghebodt</rhyme>,</l>
        <l id="s8:l11" met="3" type="+-">Hop't loon, vreest hellen <rhyme label="f" type="m">brandt</rhyme>,</l>
        <l id="s8:l12" met="3" type="-+">Och eeuwigh is soo <rhyme label="f" type="m" corresp="#s8:l11">lanck</rhyme>!</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">t'Doopsel vergheeft <rhyme label="a" type="f">d'erf-sonden</rhyme></l>
        <l id="s9:l2" met="3" type="-+">t'Vormsel sterckt onsen <rhyme label="b" type="m">moedt</rhyme>.</l>
        <l id="s9:l3" met="3" type="-+">De biechte gheneest ons <rhyme label="a" type="f" corresp="#s9:l1">wonden</rhyme>.</l>
        <l id="s9:l4" met="3" type="-+">Godts Lichaem de ziel <rhyme label="b" type="m" corresp="#s9:l2">voedt</rhyme>.</l>
        <l id="s9:l5" met="3" type="-+">Het Heyligh Olij <rhyme label="c" type="f">krachtigh</rhyme></l>
        <l id="s9:l6" met="3" type="-+">In't uyterste <rhyme label="d" type="m">verlicht</rhyme>.</l>
        <l id="s9:l7" met="3" type="-+">Het Priesterdom <rhyme label="c" type="f" corresp="#s9:l5">hoogh-machtigh</rhyme></l>
        <l id="s9:l8" met="3" type="-+">De Staet der Kercken <rhyme label="d" type="m" corresp="#s9:l6">sticht</rhyme>.</l>
        <l id="s9:l9" met="1" type="-+">Mindt <rhyme label="e" type="m">Godt</rhyme>,</l>
        <l id="s9:l10" met="2" type="-+">Houdt sijn <rhyme label="e" type="m" corresp="#s9:l9">ghebodt</rhyme>,</l>
        <l id="s9:l11" met="3" type="+-">Hop't loon, vreest hellen <rhyme label="f" type="m">brandt</rhyme>,</l>
        <l id="s9:l12" met="3" type="-+">Och eeuwigh is soo <rhyme label="f" type="m" corresp="#s9:l11">lanck</rhyme>!</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Het Houwelijck met <rhyme label="a" type="f">kinders</rhyme></l>
        <l id="s10:l2" met="3" type="-+">De Christen Kerck <rhyme label="b" type="m">vermeert</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Om te zijn Godts <rhyme label="a" type="f" corresp="#s10:l1">beminders</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Dus moet het zijn <rhyme label="b" type="m" corresp="#s10:l2">ge-eert</rhyme>:</l>
        <l id="s10:l5" met="3" type="-+">Schout de hooft-sonden <rhyme label="c" type="f">seven</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Meer als een quaet <rhyme label="d" type="m">fenijn</rhyme>:</l>
        <l id="s10:l7" met="3" type="-+">De deughden wilt <rhyme label="c" type="f" corresp="#s10:l5">aencleven</rhyme></l>
        <l id="s10:l8" met="3" type="-+">Die haer contrarie <rhyme label="d" type="m" corresp="#s10:l6">zijn</rhyme>.</l>
        <l id="s10:l9" met="1" type="-+">Mindt <rhyme label="e" type="m">Godt</rhyme>,</l>
        <l id="s10:l10" met="2" type="-+">Houdt sijn <rhyme label="e" type="m" corresp="#s10:l9">ghebodt</rhyme>,</l>
        <l id="s10:l11" met="3" type="+-">Hop't loon, vreest hellen <rhyme label="f" type="m">brandt</rhyme>,</l>
        <l id="s10:l12" met="3" type="-+">Och eeuwigh is soo <rhyme label="f" type="m" corresp="#s10:l11">lanck</rhyme>!</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Vreckheyt, en <rhyme label="a" type="f">hooveerdije</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Oncuysheydt, Gulsigh <rhyme label="b" type="m">mondt</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Nijdt, Gramschap, <rhyme label="a" type="f" corresp="#s11:l1">Luyardije</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Hoort nu der deughden <rhyme label="b" type="m" corresp="#s11:l2">vondt</rhyme>:</l>
        <l id="s11:l5" met="3" type="-+">Hebt liefde, weest <rhyme label="c" type="f">ootmoedigh</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Sijt maetigh, en <rhyme label="d" type="m">eerbaer</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">Neerstigh, mildt, en <rhyme label="c" type="f" corresp="#s11:l5">saechtmoedigh</rhyme></l>
        <l id="s11:l8" met="3" type="-+">T'welck deughden zijn <rhyme label="d" type="m" corresp="#s11:l6">voorwaer</rhyme>.</l>
        <l id="s11:l9" met="1" type="-+">Mindt <rhyme label="e" type="m">Godt</rhyme>,</l>
        <l id="s11:l10" met="2" type="-+">Houdt sijn <rhyme label="e" type="m" corresp="#s11:l9">ghebodt</rhyme>,</l>
        <l id="s11:l11" met="3" type="+-">Hop't loon, vreest hellen <rhyme label="f" type="m">brandt</rhyme>,</l>
        <l id="s11:l12" met="3" type="-+">Och eeuwigh is soo <rhyme label="f" type="m" corresp="#s11:l11">lanck</rhyme>!</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Maer wilt ghy volmaeckt <rhyme label="a" type="f">wesen</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Arm en ghehoorsaem <rhyme label="b" type="m">zijt</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">En suyver, want door <rhyme label="a" type="f" corresp="#s12:l1">desen</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Den rechten wegh u <rhyme label="b" type="m" corresp="#s12:l2">leydt</rhyme>.</l>
        <l id="s12:l5" met="3" type="-+">s'Morgens danckt Godt den <rhyme label="c" type="f">Heere</rhyme></l>
        <l id="s12:l6" met="3" type="-+">Propoost van deughden <rhyme label="d" type="m">maeckt</rhyme></l>
        <l id="s12:l7" met="3" type="-+">En Godt met wercken t' <rhyme label="c" type="f" corresp="#s12:l5">eere</rhyme>,</l>
        <l id="s12:l8" met="3" type="-+">Dus bidt en altijdt <rhyme label="d" type="m" corresp="#s12:l6">waeckt</rhyme>.</l>
        <l id="s12:l9" met="1" type="-+">Mindt <rhyme label="e" type="m">Godt</rhyme>,</l>
        <l id="s12:l10" met="2" type="-+">Houdt sijn <rhyme label="e" type="m" corresp="#s12:l9">ghebodt</rhyme>,</l>
        <l id="s12:l11" met="3" type="+-">Hop't loon, vreest hellen <rhyme label="f" type="m">brandt</rhyme>,</l>
        <l id="s12:l12" met="3" type="-+">Och eeuwigh is soo <rhyme label="f" type="m" corresp="#s12:l11">lanck</rhyme>!</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">By dagh denckt alle <rhyme label="a" type="f">uren</rhyme></l>
        <l id="s13:l2" met="3" type="-+">Godt siet my, de doodt <rhyme label="b" type="m">naeckt</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Dit slot sal eeuwigh <rhyme label="a" type="f" corresp="#s13:l1">dueren</rhyme></l>
        <l id="s13:l4" met="3" type="-+">Dus u boos leven <rhyme label="b" type="m" corresp="#s13:l2">staeckt</rhyme>.</l>
        <l id="s13:l5" met="3" type="-+">Loof s'avonts Godts <rhyme label="c" type="f">weldaden</rhyme></l>
        <l id="s13:l6" met="3" type="-+">Op alle u wercken <rhyme label="d" type="m">let</rhyme>,</l>
        <l id="s13:l7" met="3" type="-+">Bidt hem om sijn <rhyme label="c" type="f" corresp="#s13:l5">ghenaden</rhyme></l>
        <l id="s13:l8" met="3" type="-+">En maeckt een goedt <rhyme label="d" type="m" corresp="#s13:l6">opset</rhyme>.</l>
        <l id="s13:l9" met="1" type="-+">Mindt <rhyme label="e" type="m">Godt</rhyme>,</l>
        <l id="s13:l10" met="2" type="-+">Houdt sijn <rhyme label="e" type="m" corresp="#s13:l9">ghebodt</rhyme>,</l>
        <l id="s13:l11" met="3" type="+-">Hop't loon, vreest hellen <rhyme label="f" type="m">brandt</rhyme>,</l>
        <l id="s13:l12" met="3" type="-+">Och eeuwigh is soo <rhyme label="f" type="m" corresp="#s13:l11">lanck</rhyme>!</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Ist dat ghy biecht u <rhyme label="a" type="f">sonden</rhyme></l>
        <l id="s14:l2" met="3" type="-+">Bedenckt wel u <rhyme label="b" type="m">misdaet</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Hebt leedt uyt s'herten <rhyme label="a" type="f" corresp="#s14:l1">gronden</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">Neemt voor te schouwen <rhyme label="b" type="m" corresp="#s14:l2">t'quaet</rhyme>,</l>
        <l id="s14:l5" met="3" type="-+">Wilt ghy Christum <rhyme label="c" type="f">ontfanghen</rhyme>,</l>
        <l id="s14:l6" met="3" type="-+">Gaet nuchter wel <rhyme label="d" type="m">bereet</rhyme>,</l>
        <l id="s14:l7" met="3" type="-+">Ootmoedigh, met <rhyme label="c" type="f" corresp="#s14:l5">verlanghen</rhyme>,</l>
        <l id="s14:l8" met="3" type="-+">Sterck met gheloof <rhyme label="d" type="m" corresp="#s14:l6">bekleedt</rhyme>.</l>
        <l id="s14:l9" met="1" type="-+">Mindt <rhyme label="e" type="m">Godt</rhyme>,</l>
        <l id="s14:l10" met="2" type="-+">Houdt sijn <rhyme label="e" type="m" corresp="#s14:l9">ghebodt</rhyme>,</l>
        <l id="s14:l11" met="3" type="+-">Hop't loon, vreest hellen <rhyme label="f" type="m">brandt</rhyme>,</l>
        <l id="s14:l12" met="3" type="-+">Och eeuwigh is soo <rhyme label="f" type="m" corresp="#s14:l11">lanck</rhyme>!</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Wel aan dan <rhyme label="a" type="f">Catholijcken</rhyme></l>
        <l id="s15:l2" met="3" type="-+">Leeft nu naer Godts <rhyme label="b" type="m">ghebodt</rhyme>.</l>
        <l id="s15:l3" met="3" type="-+">Wilt van de deught niet <rhyme label="a" type="f" corresp="#s15:l1">wijcken</rhyme></l>
        <l id="s15:l4" met="3" type="-+">Door s'wereldt goedt <rhyme label="b" type="m" corresp="#s15:l2">versot</rhyme>.</l>
        <l id="s15:l5" met="3" type="-+">Al die daer leeft in <rhyme label="c" type="f">sonden</rhyme>,</l>
        <l id="s15:l6" met="3" type="-+">Och vreest des hellen <rhyme label="d" type="m">brandt</rhyme></l>
        <l id="s15:l7" met="3" type="-+">Christus thoont sijn vijf <rhyme label="c" type="f" corresp="#s15:l5">wonden</rhyme>,</l>
        <l id="s15:l8" met="3" type="-+">Druckt die in u <rhyme label="d" type="m" corresp="#s15:l6">verstandt</rhyme>.</l>
        <l id="s15:l9" met="1" type="-+">Mindt <rhyme label="e" type="m">Godt</rhyme>,</l>
        <l id="s15:l10" met="2" type="-+">Houdt sijn <rhyme label="e" type="m" corresp="#s15:l9">ghebodt</rhyme>,</l>
        <l id="s15:l11" met="3" type="+-">Hop't loon, vreest hellen <rhyme label="f" type="m">brandt</rhyme>,</l>
        <l id="s15:l12" met="3" type="-+">Och eeuwigh is soo <rhyme label="f" type="m" corresp="#s15:l11">lanck</rhyme>!</l>
      </lg>
    </lg>
  </text>
</song>

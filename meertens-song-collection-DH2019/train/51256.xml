  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">Hoord Vrienden naar het <rhyme label="a" type="m">geval</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">'t geen ik u zal <rhyme label="b" type="f">verhalen</rhyme>:</l>
        <l id="s1:l3" met="4" type="+-">Hoe dat de boosheid vaak niet <rhyme label="a" type="m" corresp="#s1:l1">al</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">Het Menschelijk hart doet <rhyme label="b" type="f" corresp="#s1:l2">dwalen</rhyme>;</l>
        <l id="s1:l5" met="4" type="+-">Ja vrienden hoort nu naar dit Lied <rhyme label="c" type="m">'t</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Zoo als ik 't zing, is het <rhyme label="c" type="m" corresp="#s1:l5">geschied</rhyme>,</l>
        <l id="s1:l7" met="3" type="+-">Hoe Boosheid in het <rhyme label="d" type="m">end</rhyme>,</l>
        <l id="s1:l8" met="3" type="+-">Zich zelfs stort in <rhyme label="d" type="m" corresp="#s1:l7">elend</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Graaf Siegfried een Man van <rhyme label="a" type="m">eer</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">Geheuwd aan eene <rhyme label="b" type="f">Gade</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Dit Edel Paar in min zoo <rhyme label="a" type="m" corresp="#s2:l1">teer</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">Kon nooit de laster <rhyme label="b" type="f" corresp="#s2:l2">schade</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Want Genoveva was een <rhyme label="c" type="m">Vrouw</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Een blinkend licht van <rhyme label="c" type="m" corresp="#s2:l5">Huwlijkstrouw</rhyme>,</l>
        <l id="s2:l7" met="3" type="+-">Zij mind haar <rhyme label="d" type="m">Echtgenoot</rhyme>,</l>
        <l id="s2:l8" met="3" type="+-">En God tot aan haar <rhyme label="d" type="m" corresp="#s2:l7">dood</rhyme>!</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Maar dit genot was niet van <rhyme label="a" type="m">duur</rhyme>,</l>
        <l id="s3:l2" met="3" type="+-">De Krijgsgalm deed zich <rhyme label="b" type="f">hooren</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Voor Siegfried sloeg dus daar het <rhyme label="a" type="m" corresp="#s3:l1">uur</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">Die zijn vreugd moest <rhyme label="b" type="f" corresp="#s3:l2">versmooren</rhyme>;</l>
        <l id="s3:l5" met="4" type="+-">Hij moest ten strijd, daar 't <rhyme label="c" type="m">vaderland</rhyme>:</l>
        <l id="s3:l6" met="4" type="+-">Werd door verraders <rhyme label="c" type="m" corresp="#s3:l5">aangerand</rhyme>,</l>
        <l id="s3:l7" met="3" type="+-">Hij gorde <rhyme label="d" type="m">aangedaan</rhyme>,</l>
        <l id="s3:l8" met="3" type="+-">Zijn breede Krijgszwaard <rhyme label="d" type="m" corresp="#s3:l7">aan</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">Dra riep hij toen zijn <rhyme label="a" type="m">Burgvoogt</rhyme>,</l>
        <l id="s4:l2" met="3" type="+-">Die hij eens uit <rhyme label="b" type="f">genade</rhyme>:</l>
        <l id="s4:l3" met="4" type="+-">Uit bitrere armoed had <rhyme label="a" type="m" corresp="#s4:l1">verhoogd</rhyme>,</l>
        <l id="s4:l4" met="3" type="+-">Troost Golo, troost mijn <rhyme label="b" type="f" corresp="#s4:l2">Gade</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Ik stel mijn allerwaarste <rhyme label="c" type="m">Pand</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">O Burgtvoogd, in uwen <rhyme label="c" type="m" corresp="#s4:l5">hand</rhyme>,</l>
        <l id="s4:l7" met="3" type="+-">Troost haar en blijf <rhyme label="d" type="m">bereid</rhyme>,</l>
        <l id="s4:l8" met="3" type="+-">Tot hare <rhyme label="d" type="m" corresp="#s4:l7">dientbarrheid</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="+-">O God mijn Man! roept’ 'Edele <rhyme label="a" type="m">Vrouw</rhyme></l>
        <l id="s5:l2" met="3" type="+-">Ach! wat zal mij <rhyme label="b" type="f">gebeuren</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Gij gaat en ik zal hier in <rhyme label="a" type="m" corresp="#s5:l1">rouw</rhyme>,</l>
        <l id="s5:l4" met="3" type="+-">Gelijk een Tortel <rhyme label="b" type="f" corresp="#s5:l2">treuren</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Vaartwel! vaartwel! strijd voor u <rhyme label="c" type="m">Vorst</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Dus riep zij en zonk aan zijn <rhyme label="c" type="m" corresp="#s5:l5">borst</rhyme>,</l>
        <l id="s5:l7" met="3" type="+-">God de <rhyme label="d" type="m">Opperzegenaaar</rhyme>,</l>
        <l id="s5:l8" met="3" type="+-">Beschermd u in 't <rhyme label="d" type="m" corresp="#s5:l7">gevaar</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="+-">Toen steeg den edle Graaf te <rhyme label="a" type="m">paart</rhyme>,</l>
        <l id="s6:l2" met="3" type="+-">En deed zijn zuchten <rhyme label="b" type="f">smooren</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Hij riep vaarwel! o vrouw mij <rhyme label="a" type="m" corresp="#s6:l1">waard</rhyme>,</l>
        <l id="s6:l4" met="3" type="+-">En gaf het dier de <rhyme label="b" type="f" corresp="#s6:l2">spooren</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Toen zonk den brave vrouw ter <rhyme label="c" type="m">neer</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">En bad om hulp aan God den <rhyme label="c" type="m" corresp="#s6:l5">Heer</rhyme>!</l>
        <l id="s6:l7" met="3" type="+-">En om haar <rhyme label="d" type="m">Echtgenoot</rhyme>,</l>
        <l id="s6:l8" met="3" type="+-">Te hoeden voor den <rhyme label="d" type="m" corresp="#s6:l7">dood</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="+-">Zoo sleet zij nu een half <rhyme label="a" type="m">jaar</rhyme>,</l>
        <l id="s7:l2" met="3" type="+-">In eenzaamheid haar <rhyme label="b" type="f">dagen</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Zij schreef den Graaf, den Graaf aan <rhyme label="a" type="m" corresp="#s7:l1">haar</rhyme>,</l>
        <l id="s7:l4" met="3" type="+-">'t Kon beider hart <rhyme label="b" type="f" corresp="#s7:l2">behagen</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Zij schreef Siegfried, u deugd is <rhyme label="c" type="m">groot</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Ik draag een pand in mijne <rhyme label="c" type="m" corresp="#s7:l5">schoot</rhyme>,</l>
        <l id="s7:l7" met="3" type="+-">Onz' liefde krijgt haar <rhyme label="d" type="m">loon</rhyme>,</l>
        <l id="s7:l8" met="3" type="+-">'k Schenk u gewis een <rhyme label="d" type="m" corresp="#s7:l7">zoon</rhyme>!</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="+-">Maar Golo die de deugd <rhyme label="a" type="m">verdoofd</rhyme>,</l>
        <l id="s8:l2" met="3" type="+-">Kon zijn drift niet <rhyme label="b" type="f">verwinnen</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Een helsche plan maalde hem aan 't <rhyme label="a" type="m" corresp="#s8:l1">hoofd</rhyme></l>
        <l id="s8:l4" met="3" type="+-">Dorst zijn Meesteres <rhyme label="b" type="f" corresp="#s8:l2">beminnen</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Verklaarde haar zijn <rhyme label="c" type="m">minnegloed</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Maar zij te deugdzaam van <rhyme label="c" type="m" corresp="#s8:l5">gemoed</rhyme>,</l>
        <l id="s8:l7" met="3" type="+-">Riep uit! verraad g' uw <rhyme label="d" type="m">Heer</rhyme>,</l>
        <l id="s8:l8" met="3" type="+-">Begeert gij mijne <rhyme label="d" type="m" corresp="#s8:l7">Eer</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="+-">Vergeet gij schandelijk dus u <rhyme label="a" type="m">plicht</rhyme>,</l>
        <l id="s9:l2" met="3" type="+-">Of sluimert u <rhyme label="b" type="f">geweten</rhyme>?</l>
        <l id="s9:l3" met="4" type="+-">Ga Monster! - gaat uit mijn <rhyme label="a" type="m" corresp="#s9:l1">gezigt</rhyme>,</l>
        <l id="s9:l4" met="3" type="+-">God straft u <rhyme label="b" type="f" corresp="#s9:l2">eervergeeten</rhyme>,</l>
        <l id="s9:l5" met="4" type="+-">Verrader van u goede <rhyme label="c" type="m">Heer</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">Beloond gij dus zijn weldaad <rhyme label="c" type="m" corresp="#s9:l5">weer</rhyme>?</l>
        <l id="s9:l7" met="3" type="+-">'k Beveel u Golo <rhyme label="d" type="m">ga</rhyme>!</l>
        <l id="s9:l8" met="3" type="+-">Of ik roep hulp <rhyme label="d" type="m" corresp="#s9:l7">weldra</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="+-">Neen riep hij: ik moet veel te <rhyme label="a" type="m">lang</rhyme>,</l>
        <l id="s10:l2" met="3" type="+-">Al reeds mijn wenschen <rhyme label="b" type="f">smoren</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Uw Eer, ziedaar, wat ik <rhyme label="a" type="m" corresp="#s10:l1">verlang</rhyme>,</l>
        <l id="s10:l4" met="3" type="+-">Of 'k zal u 't hart <rhyme label="b" type="f" corresp="#s10:l2">doorbooren</rhyme>;</l>
        <l id="s10:l5" met="4" type="+-">Zie, deze dolk veld u ter <rhyme label="c" type="m">neer</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">'T geld hier u dood of uwe <rhyme label="c" type="m" corresp="#s10:l5">eer</rhyme>,</l>
        <l id="s10:l7" met="3" type="+-">Genoveva <rhyme label="d" type="m">ontsteld</rhyme>,</l>
        <l id="s10:l8" met="3" type="+-">Riep met een groot <rhyme label="d" type="m" corresp="#s10:l7">geweld</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="+-">Toen kwam weldra op d' eigen <rhyme label="a" type="m">stond</rhyme>,</l>
        <l id="s11:l2" met="3" type="+-">Een Schildknaap binnen <rhyme label="b" type="f">treden</rhyme>:</l>
        <l id="s11:l3" met="4" type="+-">Deez' riep: hou Golo, lage <rhyme label="a" type="m" corresp="#s11:l1">hond</rhyme>,</l>
        <l id="s11:l4" met="3" type="+-">Gravin, zeg mij de <rhyme label="b" type="f" corresp="#s11:l2">reden</rhyme>,</l>
        <l id="s11:l5" met="4" type="+-">Waarom dit Monster zoo <rhyme label="c" type="m">verwoed</rhyme>,</l>
        <l id="s11:l6" met="4" type="+-">U Edele vrouw dus zidderen <rhyme label="c" type="m" corresp="#s11:l5">doet</rhyme>,</l>
        <l id="s11:l7" met="3" type="+-">Maar ik raad reeds zijne <rhyme label="d" type="m">daad</rhyme>,</l>
        <l id="s11:l8" met="3" type="+-">Dat hij zijn Heer <rhyme label="d" type="m" corresp="#s11:l7">verraad</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="+-">Toen knarste Golo op zijn <rhyme label="a" type="m">tand</rhyme>,</l>
        <l id="s12:l2" met="3" type="+-">Liep woedend heen en <rhyme label="b" type="f">weder</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">Greep toen den dolk woest in zijn <rhyme label="a" type="m" corresp="#s12:l1">hand</rhyme>,</l>
        <l id="s12:l4" met="3" type="+-">En stiet den Schildknaap <rhyme label="b" type="f" corresp="#s12:l2">neder</rhyme>;</l>
        <l id="s12:l5" met="4" type="+-">Deez' riep o God! 'k zie u <rhyme label="c" type="m">spot</rhyme>,</l>
        <l id="s12:l6" met="4" type="+-">Maar 'k daag u voor de Troon van <rhyme label="c" type="m" corresp="#s12:l5">God</rhyme>,</l>
        <l id="s12:l7" met="3" type="+-">Zoo stief hij voor zijn <rhyme label="d" type="m">trouw</rhyme>,</l>
        <l id="s12:l8" met="3" type="+-">Maar zonder <rhyme label="d" type="m" corresp="#s12:l7">naberouw</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="+-">Toen sprak hij met een fiere <rhyme label="a" type="m">taal</rhyme>,</l>
        <l id="s13:l2" met="3" type="+-">Om zijn daad te <rhyme label="b" type="f">verschonen</rhyme>,</l>
        <l id="s13:l3" met="4" type="+-">Hij riep veel Rldders in de <rhyme label="a" type="m" corresp="#s13:l1">zaal</rhyme>,</l>
        <l id="s13:l4" met="3" type="+-">Zie, sprak hij ik wil u <rhyme label="b" type="f" corresp="#s13:l2">toonen</rhyme>,</l>
        <l id="s13:l5" met="4" type="+-">Hoe ik de eer mijn s' Meesters <rhyme label="c" type="m">red</rhyme>,</l>
        <l id="s13:l6" met="4" type="+-">Hier de Gravin, bevlekte het <rhyme label="c" type="m" corresp="#s13:l5">bed</rhyme>,</l>
        <l id="s13:l7" met="3" type="+-">Zij leefde in <rhyme label="d" type="m">overspel</rhyme>,</l>
        <l id="s13:l8" met="3" type="+-">Met deze Schildknaap <rhyme label="d" type="m" corresp="#s13:l7">wel</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="+-">Koom dat zij ook niet wordt <rhyme label="a" type="m">verschoond</rhyme></l>
        <l id="s14:l2" met="3" type="+-">Brengt haar naar gindsche <rhyme label="b" type="f">toorn</rhyme>,</l>
        <l id="s14:l3" met="4" type="+-">Zie zijn daad heb ik reeds <rhyme label="a" type="m" corresp="#s14:l1">geloond</rhyme>,</l>
        <l id="s14:l4" met="3" type="+-">'k Moest hem het hart <rhyme label="b" type="f" corresp="#s14:l2">doorbooren</rhyme>,</l>
        <l id="s14:l5" met="4" type="+-">Fier zag toen de edele vrouw hem <rhyme label="c" type="m">aan</rhyme>,</l>
        <l id="s14:l6" met="4" type="+-">Ik zal sprak zij, o Golo <rhyme label="c" type="m" corresp="#s14:l5">gaan</rhyme>,</l>
        <l id="s14:l7" met="3" type="+-">Maar denkt een wreker <rhyme label="d" type="m">leeft</rhyme>,</l>
        <l id="s14:l8" met="3" type="+-">Die loon naar werke <rhyme label="d" type="m" corresp="#s14:l7">geeft</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="+-">Men bragt haar naar den toorn <rhyme label="a" type="m">heen</rhyme></l>
        <l id="s15:l2" met="3" type="+-">De edelste vrouw op <rhyme label="b" type="f">aarde</rhyme>,</l>
        <l id="s15:l3" met="4" type="+-">Haar zuchten en haar droef <rhyme label="a" type="m" corresp="#s15:l1">geween</rhyme>,</l>
        <l id="s15:l4" met="3" type="+-">Trof hem niet de <rhyme label="b" type="f" corresp="#s15:l2">ontaarde</rhyme>,</l>
        <l id="s15:l5" met="4" type="+-">Zij was van hulp gansch <rhyme label="c" type="m">ontblood</rhyme>,</l>
        <l id="s15:l6" met="4" type="+-">Met slechts wat water en wat <rhyme label="c" type="m" corresp="#s15:l5">brood</rhyme>,</l>
        <l id="s15:l7" met="3" type="+-">Zoo zat zij daar ter <rhyme label="d" type="m">neer</rhyme>,</l>
        <l id="s15:l8" met="3" type="+-">Haar troost was in den <rhyme label="d" type="m" corresp="#s15:l7">Heer</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="3" type="+-">De tijd was daar, in de <rhyme label="a" type="m">Natuur</rhyme>,</l>
        <l id="s16:l2" met="3" type="+-">Schonk zij een wicht het <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s16:l3" met="4" type="+-">Noch in dit allersmartlijkst <rhyme label="a" type="m" corresp="#s16:l1">uur</rhyme>,</l>
        <l id="s16:l4" met="3" type="+-">Kwam men geen hulp haar <rhyme label="b" type="f" corresp="#s16:l2">geven</rhyme>,</l>
        <l id="s16:l5" met="4" type="+-">O Golo! Golo! hoe <rhyme label="c" type="m">ontaard</rhyme>!</l>
        <l id="s16:l6" met="4" type="+-">Een dier is onze hulpe <rhyme label="c" type="m" corresp="#s16:l5">waard</rhyme>,</l>
        <l id="s16:l7" met="3" type="+-">Maar Hij! die alles <rhyme label="d" type="m">ziet</rhyme>,</l>
        <l id="s16:l8" met="3" type="+-">Verlaat de zijne <rhyme label="d" type="m" corresp="#s16:l7">niet</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="3" type="+-">God sterkt haar in <rhyme label="a" type="m">Barensnood</rhyme>,</l>
        <l id="s17:l2" met="3" type="+-">Ja in de velste <rhyme label="b" type="f">smarte</rhyme>;</l>
        <l id="s17:l3" met="4" type="+-">Dra zag ze het kindje op haar <rhyme label="a" type="m" corresp="#s17:l1">schoot</rhyme>,</l>
        <l id="s17:l4" met="3" type="+-">En drukt het aan haar <rhyme label="b" type="f" corresp="#s17:l2">harte</rhyme>;</l>
        <l id="s17:l5" met="4" type="+-">En doopt het zelfs, mijn kindje <rhyme label="c" type="m">klein</rhyme>,</l>
        <l id="s17:l6" met="4" type="+-">Uw Naam die zal Benoni <rhyme label="c" type="m" corresp="#s17:l5">zijn</rhyme>,</l>
        <l id="s17:l7" met="3" type="+-">Sprak zij, 'k heb op deez' <rhyme label="d" type="m">aard</rhyme>,</l>
        <l id="s17:l8" met="3" type="+-">In droefheid u <rhyme label="d" type="m" corresp="#s17:l7">gebaard</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="3" type="+-">Toen schreef de Slotvoogd aan zijn <rhyme label="a" type="m">heer</rhyme></l>
        <l id="s18:l2" met="3" type="+-">Zoo schandlijk als 't kon <rhyme label="b" type="f">wezen</rhyme>,</l>
        <l id="s18:l3" met="4" type="+-">Hij schreef o Graaf, uw Gade <rhyme label="a" type="m" corresp="#s18:l1">teer</rhyme>,</l>
        <l id="s18:l4" met="3" type="+-">Door Huwlijks vorm <rhyme label="b" type="f" corresp="#s18:l2">geprezen</rhyme>,</l>
        <l id="s18:l5" met="4" type="+-">Heeft door haar vuige daan <rhyme label="c" type="m">getoond</rhyme>,</l>
        <l id="s18:l6" met="4" type="+-">Dat deugd niet meer op aarde <rhyme label="c" type="m" corresp="#s18:l5">woodt</rhyme>;</l>
        <l id="s18:l7" met="3" type="+-">Heer Graaf, u snoode <rhyme label="d" type="m">vrouw</rhyme>,</l>
        <l id="s18:l8" met="3" type="+-">Schond hare <rhyme label="d" type="m" corresp="#s18:l7">huwlijkstrouw</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="3" type="+-">Den graaf verpletterd op dien <rhyme label="a" type="m">slag</rhyme>,</l>
        <l id="s19:l2" met="3" type="+-">Voelde zijn kracht <rhyme label="b" type="f">begeven</rhyme>,</l>
        <l id="s19:l3" met="4" type="+-">Hij riep ach Hemel! Hemel <rhyme label="a" type="m" corresp="#s19:l1">ach</rhyme>!</l>
        <l id="s19:l4" met="3" type="+-">Moest ik dit dan <rhyme label="b" type="f" corresp="#s19:l2">beleven</rhyme>,</l>
        <l id="s19:l5" met="4" type="+-">Neen nu bestaat geen deugd op <rhyme label="c" type="m">aard</rhyme>,</l>
        <l id="s19:l6" met="4" type="+-">Nu Genoveva mij zoo <rhyme label="c" type="m" corresp="#s19:l5">waard</rhyme>,</l>
        <l id="s19:l7" met="3" type="+-">Haar eer en trouw <rhyme label="d" type="m">verried</rhyme>,</l>
        <l id="s19:l8" met="3" type="+-">Mij schandelijk <rhyme label="d" type="m" corresp="#s19:l7">verliet</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="3" type="+-">Hij schreef ras aan den Slotvoogd <rhyme label="a" type="m">toen</rhyme>,</l>
        <l id="s20:l2" met="3" type="+-">Door woed en wraak <rhyme label="b" type="f">gedreven</rhyme>,</l>
        <l id="s20:l3" met="4" type="+-">Ik wil haar leven mij ten <rhyme label="a" type="m" corresp="#s20:l1">zoen</rhyme>,</l>
        <l id="s20:l4" met="3" type="+-">Ja, doe haar dadelijk <rhyme label="b" type="f" corresp="#s20:l2">sneven</rhyme>,</l>
        <l id="s20:l5" met="4" type="+-">Weldra keer ik te rug mijn <rhyme label="c" type="m">vrind</rhyme>,</l>
        <l id="s20:l6" met="4" type="+-">Zorg dat ik haar niet <rhyme label="c" type="m" corresp="#s20:l5">wedervind</rhyme>,</l>
        <l id="s20:l7" met="3" type="+-">'t Kind dat zij 't leven <rhyme label="d" type="m">gaf</rhyme>,</l>
        <l id="s20:l8" met="3" type="+-">Daal ook met haar in 't <rhyme label="d" type="m" corresp="#s20:l7">graf</rhyme>.</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="3" type="+-">Deez' las den brief met helschen <rhyme label="a" type="m">list</rhyme>,</l>
        <l id="s21:l2" met="3" type="+-">Liet twee Bandieten <rhyme label="b" type="f">komen</rhyme>,</l>
        <l id="s21:l3" met="4" type="+-">Ja sprak hij, innerlijk <rhyme label="a" type="m" corresp="#s21:l1">verheugd</rhyme>,</l>
        <l id="s21:l4" met="3" type="+-">Ja 't bloed van haar zal <rhyme label="b" type="f" corresp="#s21:l2">stroomen</rhyme>,</l>
        <l id="s21:l5" met="4" type="+-">Toen sleepte zijn den Edele <rhyme label="c" type="m">Vrouw</rhyme>,</l>
        <l id="s21:l6" met="4" type="+-">Alom bemind door hare <rhyme label="c" type="m" corresp="#s21:l5">trouw</rhyme>,</l>
        <l id="s21:l7" met="3" type="+-">Naar 't afgelegen <rhyme label="d" type="m">oord</rhyme>,</l>
        <l id="s21:l8" met="3" type="+-">Daar niemand hen <rhyme label="d" type="m" corresp="#s21:l7">verstoord</rhyme>.</l>
      </lg>
      <lg id="s22" type="stanza">
        <l id="s22:l1" met="3" type="+-">Welaan sprak d' eene <rhyme label="a" type="m">Moordenaaor</rhyme>,</l>
        <l id="s22:l2" met="3" type="+-">Laat ons niet langer <rhyme label="b" type="f">wachten</rhyme>,</l>
        <l id="s22:l3" met="4" type="+-">Grijpt gij het Kind maar bij het <rhyme label="a" type="m" corresp="#s22:l1">haar</rhyme>,</l>
        <l id="s22:l4" met="3" type="+-">Ik zal de Moeder <rhyme label="b" type="f" corresp="#s22:l2">slachten</rhyme>;</l>
        <l id="s22:l5" met="4" type="+-">O God! riep zij, laat af mijn <rhyme label="c" type="m">vrind</rhyme>,</l>
        <l id="s22:l6" met="4" type="+-">Spaart mij, en dit onnozel <rhyme label="c" type="m" corresp="#s22:l5">Kind</rhyme>,</l>
        <l id="s22:l7" met="3" type="+-">Ach hoort mijn smeek <rhyme label="d" type="m">gebeen</rhyme>,</l>
        <l id="s22:l8" met="3" type="+-">Ik bid op mijn kniën gaat <rhyme label="d" type="m" corresp="#s22:l7">heen</rhyme>.</l>
      </lg>
      <lg id="s23" type="stanza">
        <l id="s23:l1" met="3" type="+-">Gij kunt gerust mijn vrienden <rhyme label="a" type="m">gaan</rhyme>,</l>
        <l id="s23:l2" met="3" type="+-">Zie! zie mij angstig <rhyme label="b" type="f">beven</rhyme>,</l>
        <l id="s23:l3" met="4" type="+-">Ik zweer, ik zal u nooit <rhyme label="a" type="m" corresp="#s23:l1">verraan</rhyme>,</l>
        <l id="s23:l4" met="3" type="+-">Zoo gij ons spaard in 't <rhyme label="b" type="f" corresp="#s23:l2">leven</rhyme>,</l>
        <l id="s23:l5" met="4" type="+-">Daar ik voortaan slechts vreugde <rhyme label="c" type="m">vind</rhyme>,</l>
        <l id="s23:l6" met="4" type="+-">Voor God te leven en mijn <rhyme label="c" type="m" corresp="#s23:l5">Kind</rhyme>,</l>
        <l id="s23:l7" met="3" type="+-">Den Moordenaars <rhyme label="d" type="m">begaan</rhyme>,</l>
        <l id="s23:l8" met="3" type="+-">Zagen elkander <rhyme label="d" type="m" corresp="#s23:l7">aan</rhyme>.</l>
      </lg>
      <lg id="s24" type="stanza">
        <l id="s24:l1" met="3" type="+-">Welaan Mevrouw, gij hebt ons <rhyme label="a" type="m">hart</rhyme>,</l>
        <l id="s24:l2" met="3" type="+-">Door uwe taal <rhyme label="b" type="f">bewogen</rhyme>,</l>
        <l id="s24:l3" met="4" type="+-">Vergeef ons de aangedane <rhyme label="a" type="m" corresp="#s24:l1">smart</rhyme>,</l>
        <l id="s24:l4" met="3" type="+-">Maar berg u voor elks <rhyme label="b" type="f" corresp="#s24:l2">ogen</rhyme>,</l>
        <l id="s24:l5" met="4" type="+-">Zoo slechts een wenk ons mogt <rhyme label="c" type="m">verraan</rhyme>,</l>
        <l id="s24:l6" met="4" type="+-">Dan is 't met u, en ons <rhyme label="c" type="m" corresp="#s24:l5">gedaan</rhyme>;</l>
        <l id="s24:l7" met="3" type="+-">Koom nu naar Golo <rhyme label="d" type="m">heon</rhyme>,</l>
        <l id="s24:l8" met="3" type="+-">Dat die ook is te <rhyme label="d" type="m" corresp="#s24:l7">vreen</rhyme>.</l>
      </lg>
      <lg id="s25" type="stanza">
        <l id="s25:l1" met="3" type="+-">Zij dankte God, met gloeden <rhyme label="a" type="m">vuur</rhyme>,</l>
        <l id="s25:l2" met="3" type="+-">Heeft 't Kindje <rhyme label="b" type="f">opgeheven</rhyme>,</l>
        <l id="s25:l3" met="4" type="+-">Zij wilde 't voedsel der <rhyme label="a" type="m" corresp="#s25:l1">Natuur</rhyme>,</l>
        <l id="s25:l4" met="3" type="+-">Aan hare zuigling <rhyme label="b" type="f" corresp="#s25:l2">geven</rhyme>,</l>
        <l id="s25:l5" met="4" type="+-">Maar God wat schrik, wat droeve <rhyme label="c" type="m">smart</rhyme>,</l>
        <l id="s25:l6" met="4" type="+-">En drukte 't Kindje aan haar <rhyme label="c" type="m" corresp="#s25:l5">hart</rhyme>;</l>
        <l id="s25:l7" met="3" type="+-">De moeders melk wat <rhyme label="d" type="m">schrik</rhyme>,</l>
        <l id="s25:l8" met="3" type="+-">Verdween op 't <rhyme label="d" type="m" corresp="#s25:l7">ogenblik</rhyme>.</l>
      </lg>
      <lg id="s26" type="stanza">
        <l id="s26:l1" met="3" type="+-">Haar oog ontdekte een <rhyme label="a" type="m">Spelonk</rhyme>,</l>
        <l id="s26:l2" met="3" type="+-">Alwaar een wulps des <rhyme label="b" type="f">herte</rhyme>,</l>
        <l id="s26:l3" met="4" type="+-">Voor hare voeten <rhyme label="a" type="m" corresp="#s26:l1">nederzonk</rhyme>,</l>
        <l id="s26:l4" met="3" type="+-">Vergetend haar <rhyme label="b" type="f" corresp="#s26:l2">smarte</rhyme>.</l>
        <l id="s26:l5" met="4" type="+-">Streeld zij het edel dier <rhyme label="c" type="m">gezwind</rhyme>,</l>
        <l id="s26:l6" met="4" type="+-">Deez' bood haar melk nu aan 't <rhyme label="c" type="m" corresp="#s26:l5">Kind</rhyme>,</l>
        <l id="s26:l7" met="3" type="+-">Het Jongske was vol <rhyme label="d" type="m">vreugd</rhyme>,</l>
        <l id="s26:l8" met="3" type="+-">En dertelde <rhyme label="d" type="m" corresp="#s26:l7">verheugd</rhyme>.</l>
      </lg>
      <lg id="s27" type="stanza">
        <l id="s27:l1" met="3" type="+-">Zoo leefde zij daar <rhyme label="a" type="m">onbekend</rhyme>,</l>
        <l id="s27:l2" met="3" type="+-">Ver van het Stads <rhyme label="b" type="f">gewemel</rhyme>,</l>
        <l id="s27:l3" met="4" type="+-">Zij werd dit leven ras <rhyme label="a" type="m" corresp="#s27:l1">gewend</rhyme>,</l>
        <l id="s27:l4" met="3" type="+-">En smaakte reeds een <rhyme label="b" type="f" corresp="#s27:l2">Hemel</rhyme>,</l>
        <l id="s27:l5" met="4" type="+-">Haar maaltijd was geen <rhyme label="c" type="m">lekkernij</rhyme>,</l>
        <l id="s27:l6" met="4" type="+-">Neen Wortelen en wilde <rhyme label="c" type="m" corresp="#s27:l5">Prij</rhyme>,</l>
        <l id="s27:l7" met="3" type="+-">Was 't eenigste <rhyme label="d" type="m">geregt</rhyme>.</l>
        <l id="s27:l8" met="3" type="+-">Dat hier werd <rhyme label="d" type="m" corresp="#s27:l7">aangeregt</rhyme>.</l>
      </lg>
      <lg id="s28" type="stanza">
        <l id="s28:l1" met="3" type="+-">Haar zoon wies op tot hare <rhyme label="a" type="m">vreugd</rhyme>,</l>
        <l id="s28:l2" met="3" type="+-">Gevoed door d' Edele <rhyme label="b" type="f">hinde</rhyme>,</l>
        <l id="s28:l3" met="4" type="+-">Zij onderrigte hem hoe <rhyme label="a" type="m" corresp="#s28:l1">deugd</rhyme>,</l>
        <l id="s28:l4" met="3" type="+-">Zoo schaars hier is te <rhyme label="b" type="f" corresp="#s28:l2">vinden</rhyme>,</l>
        <l id="s28:l5" met="4" type="+-">Neen riep zij, neen, Benonie <rhyme label="c" type="m">zoon</rhyme>,</l>
        <l id="s28:l6" met="4" type="+-">De deugd vind hier op aard geen <rhyme label="c" type="m" corresp="#s28:l5">loon</rhyme>,</l>
        <l id="s28:l7" met="3" type="+-">Haar is een Lot <rhyme label="d" type="m">bereid</rhyme>,</l>
        <l id="s28:l8" met="3" type="+-">In de eeuwige <rhyme label="d" type="m" corresp="#s28:l7">zaligheid</rhyme>.</l>
      </lg>
      <lg id="s29" type="stanza">
        <l id="s29:l1" met="3" type="+-">Maar keren wij tot Siegvried <rhyme label="a" type="m">weer</rhyme>,</l>
        <l id="s29:l2" met="3" type="+-">Met Roem nu <rhyme label="b" type="f">overladen</rhyme>,</l>
        <l id="s29:l3" met="4" type="+-">Keert hij te rug, omkranst met <rhyme label="a" type="m" corresp="#s29:l1">Eer</rhyme>,</l>
        <l id="s29:l4" met="3" type="+-">Door droefheid <rhyme label="b" type="f" corresp="#s29:l2">overladen</rhyme>,</l>
        <l id="s29:l5" met="4" type="+-">Riep hij ik vind wat droevig <rhyme label="c" type="m">tot</rhyme>,</l>
        <l id="s29:l6" met="4" type="+-">Haar die ik min niet groote <rhyme label="c" type="m" corresp="#s29:l5">God</rhyme>!</l>
        <l id="s29:l7" met="3" type="+-">Mijn lieve dierb're <rhyme label="d" type="m">vrouw</rhyme>,</l>
        <l id="s29:l8" met="3" type="+-">Hoe brengt gij mij in <rhyme label="d" type="m" corresp="#s29:l7">rouw</rhyme>.</l>
      </lg>
      <lg id="s30" type="stanza">
        <l id="s30:l1" met="3" type="+-">In diepe wemoed <rhyme label="a" type="m">neergebukt</rhyme>,</l>
        <l id="s30:l2" met="3" type="+-">Zwierf hij verlate <rhyme label="b" type="f">henen</rhyme>,</l>
        <l id="s30:l3" met="4" type="+-">Zijn vrolijkheid was hem <rhyme label="a" type="m" corresp="#s30:l1">ontrukt</rhyme>,</l>
        <l id="s30:l4" met="3" type="+-">De rust van hem <rhyme label="b" type="f" corresp="#s30:l2">verdweenen</rhyme>,</l>
        <l id="s30:l5" met="4" type="+-">Hij zogt zijn Vrouws vertrekken <rhyme label="c" type="m">rond</rhyme>,</l>
        <l id="s30:l6" met="4" type="+-">En schrok daar hij een briefje <rhyme label="c" type="m" corresp="#s30:l5">vond</rhyme>,</l>
        <l id="s30:l7" met="3" type="+-">Geschreven door haar <rhyme label="d" type="m">Hand</rhyme>,</l>
        <l id="s30:l8" met="3" type="+-">Hoe zij werd <rhyme label="d" type="m" corresp="#s30:l7">aangerand</rhyme>.</l>
      </lg>
      <lg id="s31" type="stanza">
        <l id="s31:l1" met="3" type="+-">Zij schreef hoe zij onschuldig <rhyme label="a" type="m">stierf</rhyme>,</l>
        <l id="s31:l2" met="3" type="+-">Vervolgd door een <rhyme label="b" type="f">ontzinde</rhyme>,</l>
        <l id="s31:l3" met="4" type="+-">Daar nooit geen mensch haar trouw <rhyme label="a" type="m" corresp="#s31:l1">verwierf</rhyme>,</l>
        <l id="s31:l4" met="3" type="+-">Maar hem alleen <rhyme label="b" type="f" corresp="#s31:l2">beminde</rhyme>;</l>
        <l id="s31:l5" met="4" type="+-">Nauw las de Graaf dit, of <rhyme label="c" type="m">verwoed</rhyme>,</l>
        <l id="s31:l6" met="4" type="+-">Riep hij o Golo! 'k ijs <rhyme label="c" type="m" corresp="#s31:l5">bloed</rhyme>,</l>
        <l id="s31:l7" met="3" type="+-">Beef! valsche snoodaard <rhyme label="d" type="m">beef</rhyme>!</l>
        <l id="s31:l8" met="3" type="+-">'K wil hebben dat hij <rhyme label="d" type="m" corresp="#s31:l7">sneef'</rhyme>.</l>
      </lg>
      <lg id="s32" type="stanza">
        <l id="s32:l1" met="3" type="+-">Ras deed hij Golo <rhyme label="a" type="m">onverwagt</rhyme>,</l>
        <l id="s32:l2" met="3" type="+-">Al in die Kerker <rhyme label="b" type="f">werpen</rhyme>,</l>
        <l id="s32:l3" met="4" type="+-">Alwaar zijn Gade had <rhyme label="a" type="m" corresp="#s32:l1">versmagt</rhyme>,</l>
        <l id="s32:l4" met="3" type="+-">Daar zat hij n[...] <rhyme label="b" type="f" corresp="#s32:l2">knerpen</rhyme>,</l>
        <l id="s32:l5" met="4" type="+-">Verwoed te knarsen op zijn <rhyme label="c" type="m">tand</rhyme>,</l>
        <l id="s32:l6" met="4" type="+-">En door de wanhoop <rhyme label="c" type="m" corresp="#s32:l5">aangerand</rhyme>,</l>
        <l id="s32:l7" met="3" type="+-">Sprak hij wat snoodheid <rhyme label="d" type="m">groot</rhyme>,</l>
        <l id="s32:l8" met="3" type="+-">Ja Graaf u vrouw is <rhyme label="d" type="m" corresp="#s32:l7">dood</rhyme>.</l>
      </lg>
      <lg id="s33" type="stanza">
        <l id="s33:l1" met="3" type="+-">Zij stierf en wel op mijn <rhyme label="a" type="m">bevel</rhyme>,</l>
        <l id="s33:l2" met="3" type="+-">Maar zij had niets <rhyme label="b" type="f">misdreven</rhyme>,</l>
        <l id="s33:l3" met="4" type="+-">Ik zelfs beminde haar zeer <rhyme label="a" type="m" corresp="#s33:l1">wel</rhyme>,</l>
        <l id="s33:l4" met="3" type="+-">Wilt mij nu weder <rhyme label="b" type="f" corresp="#s33:l2">streven</rhyme>,</l>
        <l id="s33:l5" met="4" type="+-">Verwoed was 'k, daar 'k haar <rhyme label="c" type="m">verstiet</rhyme>,</l>
        <l id="s33:l6" met="4" type="+-">Ik lach zelfs noch om u <rhyme label="c" type="m" corresp="#s33:l5">verdriet</rhyme>,</l>
        <l id="s33:l7" met="3" type="+-">Dat vrij uw dolk nu <rhyme label="d" type="m">snel</rhyme>,</l>
        <l id="s33:l8" met="3" type="+-">Mijn neerzend naar de <rhyme label="d" type="m" corresp="#s33:l7">hel</rhyme>.</l>
      </lg>
      <lg id="s34" type="stanza">
        <l id="s34:l1" met="3" type="+-">De Graaf verliet den Tijger <rhyme label="a" type="m">dra</rhyme>,</l>
        <l id="s34:l2" met="3" type="+-">Deed hem zijn jagthond <rhyme label="b" type="f">geven</rhyme>,</l>
        <l id="s34:l3" met="4" type="+-">En volgde het wild gedierte <rhyme label="a" type="m" corresp="#s34:l1">na</rhyme>,</l>
        <l id="s34:l4" met="3" type="+-">Door woen en smart <rhyme label="b" type="f" corresp="#s34:l2">gedreven</rhyme>,</l>
        <l id="s34:l5" met="4" type="+-">Hij ziet een Hinde, jaagt haar <rhyme label="c" type="m">op</rhyme>,</l>
        <l id="s34:l6" met="4" type="+-">Zij vlugte schuw op een <rhyme label="c" type="m" corresp="#s34:l5">galop</rhyme>,</l>
        <l id="s34:l7" met="3" type="+-">Siegfried door Struk en <rhyme label="d" type="m">Boom</rhyme>,</l>
        <l id="s34:l8" met="3" type="+-">Vervolgd haar zonder <rhyme label="d" type="m" corresp="#s34:l7">schroom</rhyme>,</l>
      </lg>
      <lg id="s35" type="stanza">
        <l id="s35:l1" met="3" type="+-">Zijn Oog ontdekte een <rhyme label="a" type="m">Spelonk</rhyme>,</l>
        <l id="s35:l2" met="3" type="+-">Hij ziet met angstig <rhyme label="b" type="f">beven</rhyme>,</l>
        <l id="s35:l3" met="4" type="+-">Een Vrouw die op haar knieën <rhyme label="a" type="m" corresp="#s35:l1">zonk</rhyme>,</l>
        <l id="s35:l4" met="3" type="+-">De arme <rhyme label="b" type="f" corresp="#s35:l2">opgeheven</rhyme>,</l>
        <l id="s35:l5" met="4" type="+-">Hij naderd, maar zij roept blijst <rhyme label="c" type="m">staan</rhyme>,</l>
        <l id="s35:l6" met="4" type="+-">Laat mij uw Mantel toch <rhyme label="c" type="m" corresp="#s35:l5">omslaan</rhyme>?</l>
        <l id="s35:l7" met="3" type="+-">Hij gaf dien, ging op <rhyme label="d" type="m">zij</rhyme>,</l>
        <l id="s35:l8" met="3" type="+-">Toen trad zij nader <rhyme label="d" type="m" corresp="#s35:l7">bij</rhyme>.</l>
      </lg>
      <lg id="s36" type="stanza">
        <l id="s36:l1" met="3" type="+-">Nouw ziet haar oog den Ridder <rhyme label="a" type="m">aan</rhyme>,</l>
        <l id="s36:l2" met="3" type="+-">Of zijgt in onmacht <rhyme label="b" type="f">neder</rhyme>,</l>
        <l id="s36:l3" met="4" type="+-">Hij met het lot van haar <rhyme label="a" type="m" corresp="#s36:l1">begaan</rhyme>,</l>
        <l id="s36:l4" met="3" type="+-">En nadert haar zeer <rhyme label="b" type="f" corresp="#s36:l2">teder</rhyme>,</l>
        <l id="s36:l5" met="4" type="+-">Daar hij haar in zijn Arme <rhyme label="c" type="m">sluit</rhyme>,</l>
        <l id="s36:l6" met="4" type="+-">Zij Gild ô God! mijn Siegvried <rhyme label="c" type="m" corresp="#s36:l5">uit</rhyme>,</l>
        <l id="s36:l7" met="3" type="+-">Verstijfd staart hij haar <rhyme label="d" type="m">aan</rhyme>,</l>
        <l id="s36:l8" met="3" type="+-">En kan bijna niet <rhyme label="d" type="m" corresp="#s36:l7">staan</rhyme>.</l>
      </lg>
      <lg id="s37" type="stanza">
        <l id="s37:l1" met="3" type="+-">Gij Genoveva dierbre <rhyme label="a" type="m">Vrouw</rhyme>,</l>
        <l id="s37:l2" met="3" type="+-">Riep hij, omarmt haar <rhyme label="b" type="f">teder</rhyme>;</l>
        <l id="s37:l3" met="4" type="+-">Gij, leeft het einperk mijner <rhyme label="a" type="m" corresp="#s37:l1">rouw</rhyme>,</l>
        <l id="s37:l4" met="3" type="+-">Is daar, ik heb u <rhyme label="b" type="f" corresp="#s37:l2">weder</rhyme>,</l>
        <l id="s37:l5" met="4" type="+-">Waar is mijn kind, mijn dierbre <rhyme label="c" type="m">zoon</rhyme>!</l>
        <l id="s37:l6" met="4" type="+-">God! ik smaak dan noch <rhyme label="c" type="m" corresp="#s37:l5">Vaderloon</rhyme>,</l>
        <l id="s37:l7" met="3" type="+-">Heb dan Almachtig <rhyme label="d" type="m">God</rhyme>!</l>
        <l id="s37:l8" met="3" type="+-">Bestierder van mijn <rhyme label="d" type="m" corresp="#s37:l7">lot</rhyme>.</l>
      </lg>
      <lg id="s38" type="stanza">
        <l id="s38:l1" met="3" type="+-">Toen kwam Benoni 't lieve <rhyme label="a" type="m">Kind</rhyme>,</l>
        <l id="s38:l2" met="3" type="+-">Met vruchten in zijn <rhyme label="b" type="f">handen</rhyme>,</l>
        <l id="s38:l3" met="4" type="+-">Toen voelde Siegfried draa <rhyme label="a" type="m" corresp="#s38:l1">gezwind</rhyme>,</l>
        <l id="s38:l4" met="3" type="+-">Natuur in hem <rhyme label="b" type="f" corresp="#s38:l2">ontbranden</rhyme>,</l>
        <l id="s38:l5" met="4" type="+-">Nu was hij rijker dan een <rhyme label="c" type="m">Vorst</rhyme>,</l>
        <l id="s38:l6" met="4" type="+-">hij drukte 't Kind aan zijne <rhyme label="c" type="m" corresp="#s38:l5">Borst</rhyme>,</l>
        <l id="s38:l7" met="3" type="+-">Zijn vreugk kent perk noch <rhyme label="d" type="m">paal</rhyme>,</l>
        <l id="s38:l8" met="3" type="+-">hij kust hem <rhyme label="d" type="m" corresp="#s38:l7">hondertmaal</rhyme>.</l>
      </lg>
      <lg id="s39" type="stanza">
        <l id="s39:l1" met="3" type="+-">Gij zijt mijn Vader sprak het <rhyme label="a" type="m">Kind</rhyme>,</l>
        <l id="s39:l2" met="3" type="+-">Viel op zijn Knietjes <rhyme label="b" type="f">neder</rhyme>,</l>
        <l id="s39:l3" met="4" type="+-">Ik wordt dus van u teer <rhyme label="a" type="m" corresp="#s39:l1">bemind</rhyme>,</l>
        <l id="s39:l4" met="3" type="+-">O min ook Moeder <rhyme label="b" type="f" corresp="#s39:l2">weder</rhyme>,</l>
        <l id="s39:l5" met="4" type="+-">Zij bad altoos voor u zoo <rhyme label="c" type="m">teer</rhyme>,</l>
        <l id="s39:l6" met="4" type="+-">Ik zie u tranen vloeijen <rhyme label="c" type="m" corresp="#s39:l5">neer</rhyme>,</l>
        <l id="s39:l7" met="3" type="+-">'K dank u lieve <rhyme label="d" type="m">heer</rhyme>,</l>
        <l id="s39:l8" met="3" type="+-">Mijn Vader heb ik <rhyme label="d" type="m" corresp="#s39:l7">weer</rhyme>.</l>
      </lg>
      <lg id="s40" type="stanza">
        <l id="s40:l1" met="3" type="+-">Ras was heer Siegfried weer <rhyme label="a" type="m">ontvloon</rhyme>,</l>
        <l id="s40:l2" met="3" type="+-">Om Kleederen te <rhyme label="b" type="f">halen</rhyme>,</l>
        <l id="s40:l3" met="4" type="+-">Voor zijne Ga, en voor zijn <rhyme label="a" type="m" corresp="#s40:l1">zoon</rhyme>,</l>
        <l id="s40:l4" met="3" type="+-">En zonder lang te <rhyme label="b" type="f" corresp="#s40:l2">dralen</rhyme>,</l>
        <l id="s40:l5" met="4" type="+-">Keerd hij weer met <rhyme label="c" type="m">Trompetgeschal</rhyme>,</l>
        <l id="s40:l6" met="4" type="+-">'T Geen Genoveva leide <rhyme label="c" type="m" corresp="#s40:l5">zal</rhyme>,</l>
        <l id="s40:l7" met="3" type="+-">Zoo trad hij in 't <rhyme label="d" type="m">Spelonk</rhyme>,</l>
        <l id="s40:l8" met="3" type="+-">Door vreugde gansch <rhyme label="d" type="m" corresp="#s40:l7">ontvonkt</rhyme>.</l>
      </lg>
      <lg id="s41" type="stanza">
        <l id="s41:l1" met="3" type="+-">Dra was het edel paar <rhyme label="a" type="m">gered</rhyme>,</l>
        <l id="s41:l2" met="3" type="+-">Bestijd den Triumph <rhyme label="b" type="f">wagen</rhyme>,</l>
        <l id="s41:l3" met="4" type="+-">Men hoorde toen een vreugde <rhyme label="a" type="m" corresp="#s41:l1">kreet</rhyme>,</l>
        <l id="s41:l4" met="3" type="+-">Elks oog scheen haar te <rhyme label="b" type="f" corresp="#s41:l2">vragen</rhyme>,</l>
        <l id="s41:l5" met="4" type="+-">O dierb're Vrouw hoe is 't u <rhyme label="c" type="m">gegaan</rhyme>?</l>
        <l id="s41:l6" met="4" type="+-">Men bad haar schier als heilig <rhyme label="c" type="m" corresp="#s41:l5">aan</rhyme>,</l>
        <l id="s41:l7" met="3" type="+-">Zij en het Jeugdig <rhyme label="d" type="m">Kind</rhyme>,</l>
        <l id="s41:l8" met="3" type="+-">Werde van een elk <rhyme label="d" type="m" corresp="#s41:l7">bemind</rhyme>.</l>
      </lg>
      <lg id="s42" type="stanza">
        <l id="s42:l1" met="3" type="+-">Zij bad noch voor haar vijand <rhyme label="a" type="m">toen</rhyme>,</l>
        <l id="s42:l2" met="3" type="+-">Om zijn vout te <rhyme label="b" type="f">veergeven</rhyme>,</l>
        <l id="s42:l3" met="4" type="+-">Maar neen het Offer moest een <rhyme label="a" type="m" corresp="#s42:l1">zoen</rhyme>,</l>
        <l id="s42:l4" met="3" type="+-">En 't Wraakzwaard werd <rhyme label="b" type="f" corresp="#s42:l2">geheven</rhyme>;</l>
        <l id="s42:l5" met="4" type="+-">hij werd veroordeeld die <rhyme label="c" type="m">Barbaar</rhyme>,</l>
        <l id="s42:l6" met="4" type="+-">Zijn leên te trekken uit <rhyme label="c" type="m" corresp="#s42:l5">elkaar</rhyme>,</l>
        <l id="s42:l7" met="3" type="+-">En onder 't bangst <rhyme label="d" type="m">geluid</rhyme>,</l>
        <l id="s42:l8" met="3" type="+-">Blies hij zijn ziel toen <rhyme label="d" type="m" corresp="#s42:l7">uit</rhyme>.</l>
      </lg>
      <lg id="s43" type="stanza">
        <l id="s43:l1" met="3" type="+-">Nu leefde zij bevrijd van <rhyme label="a" type="m">druk</rhyme>,</l>
        <l id="s43:l2" met="3" type="+-">In liefde nog veel <rhyme label="b" type="f">jaren</rhyme>,</l>
        <l id="s43:l3" met="4" type="+-">Tot dat de dood in hun <rhyme label="a" type="m" corresp="#s43:l1">geluk</rhyme>,</l>
        <l id="s43:l4" met="3" type="+-">Medogeloos kwam <rhyme label="b" type="f" corresp="#s43:l2">waren</rhyme>,</l>
        <l id="s43:l5" met="4" type="+-">Zij stierf de edele Vrouw op <rhyme label="c" type="m">aard</rhyme>,</l>
        <l id="s43:l6" met="4" type="+-">haar ziel voor beter heil <rhyme label="c" type="m" corresp="#s43:l5">gespaard</rhyme>,</l>
        <l id="s43:l7" met="3" type="+-">Vloog nu op hooger <rhyme label="d" type="m">Sijpheer</rhyme>;</l>
        <l id="s43:l8" met="3" type="+-">Tot hare <rhyme label="d" type="m" corresp="#s43:l7">Opperheer</rhyme>.</l>
      </lg>
      <lg id="s44" type="stanza">
        <l id="s44:l1" met="3" type="+-">haar man en zoon door <rhyme label="a" type="m">droevenis</rhyme>,</l>
        <l id="s44:l2" met="3" type="+-">Wild' ook in vreugd niet <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s44:l3" met="4" type="+-">Verkozen in de <rhyme label="a" type="m" corresp="#s44:l1">wildernis</rhyme>;</l>
        <l id="s44:l4" met="3" type="+-">In eenzaamheid te <rhyme label="b" type="f" corresp="#s44:l2">leven</rhyme>,</l>
        <l id="s44:l5" met="4" type="+-">In zelfde Grot waar de edele <rhyme label="c" type="m">Vrouw</rhyme>,</l>
        <l id="s44:l6" met="4" type="+-">Geweend had om haar <rhyme label="c" type="m" corresp="#s44:l5">huwelijkstrouw</rhyme>,</l>
        <l id="s44:l7" met="3" type="+-">Zij gaven Geld en <rhyme label="d" type="m">Goed</rhyme>,</l>
        <l id="s44:l8" met="3" type="+-">Toen aan hun naaste <rhyme label="d" type="m" corresp="#s44:l7">bloed</rhyme>,</l>
      </lg>
      <lg id="s45" type="stanza">
        <l id="s45:l1" met="3" type="+-">Twee Kluizen boude men <rhyme label="a" type="m">alhaar</rhyme>,</l>
        <l id="s45:l2" met="3" type="+-">hier in, schier op elks <rhyme label="b" type="f">behagen</rhyme>,</l>
        <l id="s45:l3" met="4" type="+-">Om 't ruwe kleed als <rhyme label="a" type="m" corresp="#s45:l1">Kluizenaar</rhyme>,</l>
        <l id="s45:l4" met="3" type="+-">Met groote vreugd te <rhyme label="b" type="f" corresp="#s45:l2">dragen</rhyme>,</l>
        <l id="s45:l5" met="4" type="+-">En zoo te vinden met <rhyme label="c" type="m">beleid</rhyme>;</l>
        <l id="s45:l6" met="4" type="+-">Den weg die voert ter <rhyme label="c" type="m" corresp="#s45:l5">zaligheid</rhyme>;</l>
        <l id="s45:l7" met="3" type="+-">En daar bevrijd van <rhyme label="d" type="m">pijn</rhyme></l>
        <l id="s45:l8" met="3" type="+-">Met haar vereend te <rhyme label="d" type="m" corresp="#s45:l7">zijn</rhyme>.</l>
      </lg>
      <lg id="s46" type="stanza">
        <l id="s46:l1" met="3" type="+-">O! die hier de deugd <rhyme label="a" type="m">verdrukt</rhyme>,</l>
        <l id="s46:l2" met="3" type="+-">Keerd van u schandaad <rhyme label="b" type="f">weder</rhyme>,</l>
        <l id="s46:l3" met="4" type="+-">Gaat g' onder wellust <rhyme label="a" type="m" corresp="#s46:l1">neergebukt</rhyme>,</l>
        <l id="s46:l4" met="3" type="+-">Lees dit en lees het <rhyme label="b" type="f" corresp="#s46:l2">weder</rhyme>,</l>
        <l id="s46:l5" met="4" type="+-">Brengt geen onschuldige in <rhyme label="c" type="m">lij</rhyme>,</l>
        <l id="s46:l6" met="4" type="+-">Blijft 't siersel van de <rhyme label="c" type="m" corresp="#s46:l5">Maatschappij</rhyme>,</l>
        <l id="s46:l7" met="3" type="+-">Zoo zend gewis den <rhyme label="d" type="m">heer</rhyme>!</l>
        <l id="s46:l8" met="3" type="+-">Zijn zegen op u <rhyme label="d" type="m" corresp="#s46:l7">neer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

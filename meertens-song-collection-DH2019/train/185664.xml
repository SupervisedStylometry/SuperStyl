    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">Koopt <rhyme label="a" type="f">zwavelstokken</rhyme>!</l>
        <l id="s1:l2" met="4" type="+-">'k Heb er niet veel in mijn <rhyme label="b" type="m">mand</rhyme>:</l>
        <l id="s1:l3" met="2" type="-+">Voor weinig <rhyme label="c" type="f">centen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Stel ik ze u ter <rhyme label="b" type="m" corresp="#s1:l2">hand</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Het is een onvoorzigtig <rhyme label="d" type="m">man</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Die 't waagt, en zich onthoudt <rhyme label="d" type="m" corresp="#s1:l5">hiervan</rhyme>;</l>
        <l id="s1:l7" met="4" type="-+">Men heeft bij nacht en <rhyme label="e" type="m">ongeval</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Ze dikwijls toch van <rhyme label="f" type="f">nooden</rhyme>.</l>
      </lg>

  <author>Jan Jansz. Deutel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">CHristus Gods Soon seer hoogh <rhyme label="a" type="f">ghepresen</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Leerd' niet, dat saligh waren <rhyme label="b" type="m">die</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Alleen 'twoort hoorden: maer soo <rhyme label="b" type="m" corresp="#s1:l2">wie</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Recht gheloovigh, Godts woordt by <rhyme label="a" type="f" corresp="#s1:l1">desen</rhyme></l>
        <l id="s1:l5" met="2" type="-+">Aenneemt met <rhyme label="a" type="f" corresp="#s1:l1">vreesen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Voor die 'twoort hooren en <rhyme label="a" type="f">bewaren</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Wert saligheydt, als die <rhyme label="b" type="m">vayliant</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">'Thuys op den steen, niet op het <rhyme label="b" type="m" corresp="#s2:l2">sant</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Timmeren, vry van de <rhyme label="a" type="f" corresp="#s2:l1">zeebaren</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Oft wints <rhyme label="a" type="f" corresp="#s2:l1">beswaren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Al had Is'rel, Gods woordt <rhyme label="a" type="f">veelvuldigh</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Vande Propheten wel <rhyme label="b" type="m">verstaen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">En nochtans niet daer na <rhyme label="b" type="m" corresp="#s3:l2">ghedaen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">'Tmaeckt hen voor God (diet sach <rhyme label="a" type="f" corresp="#s3:l1">geduldigh</rhyme>)</l>
        <l id="s3:l5" met="2" type="-+">Dies te meer <rhyme label="a" type="f" corresp="#s3:l1">schuldich</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Naem- of schijn-heyligh kan niet <rhyme label="a" type="f">baten</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Goe vruchten moetmen mercken // <rhyme label="b" type="m">bloot</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">'Tgeloof is sonder wercken, <rhyme label="b" type="m" corresp="#s4:l2">doodt</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Alst lichaem van den gheest <rhyme label="a" type="f" corresp="#s4:l1">verlaten</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Wilt dit wel <rhyme label="a" type="f" corresp="#s4:l1">vaten</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">'Tis ons geseyt, dat God de <rhyme label="a" type="f">Heere</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Eyscht onderhoudingh' sijns <rhyme label="b" type="m">ghebodts</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">liefds oeff'ning', en voor d'aenschijn <rhyme label="b" type="m" corresp="#s5:l2">Gods</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Ootmoedigh zijn, hem t'elcken <rhyme label="a" type="f" corresp="#s5:l1">keere</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">Dus gheven <rhyme label="a" type="f" corresp="#s5:l1">eere</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Oock en dient dit hier niet <rhyme label="a" type="f">vergeten</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Dat die des Heeren wille <rhyme label="b" type="m">goedt</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Wel wetend' nochtans niet en <rhyme label="b" type="m" corresp="#s6:l2">doet</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Met seer veel slaghen werdt <rhyme label="a" type="f" corresp="#s6:l1">ghesmeten</rhyme></l>
        <l id="s6:l5" met="2" type="-+">Wat baet sulck <rhyme label="a" type="f" corresp="#s6:l1">weten</rhyme>;</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Nadien dat dan voor Godt <rhyme label="a" type="f">alleene</rhyme></l>
        <l id="s7:l2" met="4" type="-+">'Tgheloove geldt, dat dadigh <rhyme label="b" type="m">is</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Door liefd', die alle <rhyme label="b" type="m" corresp="#s7:l2">kentenis</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Verr' overtreft, ja deughden <rhyme label="a" type="f" corresp="#s7:l1">gheene</rhyme>,</l>
        <l id="s7:l5" met="2" type="-+">Soo groot ick <rhyme label="a" type="f" corresp="#s7:l1">meene</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Gheen menschen oock voor Godt <rhyme label="a" type="f">rechtveerdigh</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Zijn sullen door 't ghehoor der <rhyme label="b" type="m">Wet</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Dan diese doen, dus sulck <rhyme label="b" type="m" corresp="#s8:l2">opset</rhyme></l>
        <l id="s8:l4" met="4" type="-+">In ons doch zy en blijft <rhyme label="a" type="f" corresp="#s8:l1">volheerdigh</rhyme></l>
        <l id="s8:l5" met="2" type="-+">Van sond' <rhyme label="a" type="f" corresp="#s8:l1">boetveerdigh</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Exempel aen den vijghboom <rhyme label="a" type="f">groene</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Hoewel hy was seer schoon <rhyme label="b" type="m">geblaert</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Maer vruchteloos, dies <rhyme label="b" type="m" corresp="#s9:l2">ongespaert</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Werdt hy vervloeckt: te dien <rhyme label="a" type="f" corresp="#s9:l1">saysoene</rhyme></l>
        <l id="s9:l5" met="2" type="-+">Verdorde <rhyme label="a" type="f" corresp="#s9:l1">coene</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Recht laet ons dees en <rhyme label="a" type="f">dierghelijcke</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Schriften tot leeringh' nemen <rhyme label="b" type="m">waer</rhyme>.</l>
        <l id="s10:l3" met="4" type="-+">'Tgheloof en mach niet <rhyme label="b" type="m" corresp="#s10:l2">onvruchtbaer</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Blijven: op dat hier nae Godts <rhyme label="a" type="f" corresp="#s10:l1">rijcke</rhyme></l>
        <l id="s10:l5" met="2" type="-+">Ons niet <rhyme label="a" type="f" corresp="#s10:l1">beswijcke</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Loon na werck, elck wert <rhyme label="a" type="f">ghegeven</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Prijs, eer, end' <rhyme label="b" type="m">onvergancklijckheyt</rhyme></l>
        <l id="s11:l3" met="4" type="-+">Dien, die staen met <rhyme label="b" type="m" corresp="#s11:l2">verduldigheyt</rhyme></l>
        <l id="s11:l4" met="4" type="-+">In goede wercken nae 't eeuwigh <rhyme label="a" type="f" corresp="#s11:l1">leven</rhyme>,</l>
        <l id="s11:l5" met="2" type="-+">Worden <rhyme label="a" type="f" corresp="#s11:l1">verheven</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Contrary sal <rhyme label="a" type="f">d'onghehoorsame</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Des Euangelijs g'beuren // <rhyme label="b" type="m">siet</rhyme></l>
        <l id="s12:l3" met="4" type="-+">'Tgesegh wert dan met treuren // <rhyme label="b" type="m" corresp="#s12:l2">vliet</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">D'eeuwigh verdervens pijn vol <rhyme label="a" type="f" corresp="#s12:l1">blame</rhyme></l>
        <l id="s12:l5" met="2" type="-+">Crijght sulck <rhyme label="a" type="f" corresp="#s12:l1">lichame</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Dit al te seer groot <rhyme label="a" type="f">onderscheyden</rhyme></l>
        <l id="s13:l2" met="4" type="-+">Ons te beweghen wel <rhyme label="b" type="m">behoort</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Altijdt ons hert met 'sHeeren <rhyme label="b" type="m" corresp="#s13:l2">woort</rhyme></l>
        <l id="s13:l4" met="4" type="-+">Castijdigh voor hem te <rhyme label="a" type="f" corresp="#s13:l1">bereyden</rhyme>,</l>
        <l id="s13:l5" met="2" type="-+">Sonder <rhyme label="a" type="f" corresp="#s13:l1">verbeyden</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">O Prince Godt uws gheests <rhyme label="a" type="f">regieren</rhyme></l>
        <l id="s14:l2" met="4" type="-+">Ons swackheyt doch behulpich <rhyme label="b" type="m">zy</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">In allen nooden staet ons <rhyme label="b" type="m" corresp="#s14:l2">by</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">Wilt door u vrees' van sond' <rhyme label="a" type="f" corresp="#s14:l1">purgieren</rhyme>,</l>
        <l id="s14:l5" met="2" type="-+">Tot deught ons <rhyme label="a" type="f" corresp="#s14:l1">stieren</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <author>Johanna de Gavre</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Ick ben een aerdigh <rhyme label="a" type="m">kindt</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Ick heb een goedt <rhyme label="b" type="m">verstant</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Met mijn Pijlen om te <rhyme label="c" type="m">gaen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Een ieder ick <rhyme label="a" type="m" corresp="#s1:l1">verwint</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Ick wen s’al naer mijn <rhyme label="b" type="m" corresp="#s1:l2">handt</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Om mijn liefden te <rhyme label="c" type="m" corresp="#s1:l3">begaen</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Ick treck se al tot <rhyme label="d" type="m">my</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Ick en laet niemandt <rhyme label="d" type="m" corresp="#s1:l7">vry</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Als ick hun raken <rhyme label="e" type="m">magh</rhyme>,</l>
        <l id="s1:l10" met="4" type="-+">Vint ick hun in een soet <rhyme label="e" type="m" corresp="#s1:l9">beklagh</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Wie leeren Schieten <rhyme label="a" type="m">wilt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Moet komen al tot <rhyme label="b" type="m">my</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Cupido te weder <rhyme label="c" type="m">staen</rhyme>.</l>
        <l id="s2:l4" met="3" type="-+">Daer in ben ick seer <rhyme label="a" type="m" corresp="#s2:l1">milt</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Want dese konst is <rhyme label="b" type="m" corresp="#s2:l2">vry</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Niemandt kan daer teghen <rhyme label="c" type="m" corresp="#s2:l3">gaen</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Maer let wat ick u <rhyme label="d" type="m">segh</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Want daer zijn op den <rhyme label="d" type="m" corresp="#s2:l7">wegh</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Vyanden op de <rhyme label="e" type="m">baen</rhyme>,</l>
        <l id="s2:l10" met="4" type="-+">Die u willen <rhyme label="e" type="m" corresp="#s2:l9">wederstaen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Vraeght hun voor eerst het <rhyme label="a" type="m">woort</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Soo het gheen <rhyme label="b" type="m">Iesus</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Maeckt u Pijlen dan <rhyme label="c" type="m">ghereet</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Is het twist oft <rhyme label="a" type="m" corresp="#s3:l1">discoort</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Ick segh u voor <rhyme label="b" type="m" corresp="#s3:l2">ghewis</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Biet se wederom <rhyme label="c" type="m" corresp="#s3:l3">bescheet</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Recht uwen <rhyme label="d" type="m">Boogh</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Altijt naer my om <rhyme label="d" type="m" corresp="#s3:l7">hoogh</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Siet dat ghe hem soo <rhyme label="e" type="m">ghewent</rhyme>,</l>
        <l id="s3:l10" met="4" type="-+">Dat ghy niet als Iesus <rhyme label="e" type="m" corresp="#s3:l9">kent</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Door Mijnen naem <rhyme label="a" type="m">alleen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Soo moet het vluchten <rhyme label="b" type="m">al</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Al waeren sy noch soo <rhyme label="c" type="m">sterck</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">De Hel is veel te <rhyme label="a" type="m" corresp="#s4:l1">kleen</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">T’is al maer niet met <rhyme label="b" type="m" corresp="#s4:l2">al</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Als ick met mijn gratie <rhyme label="c" type="m" corresp="#s4:l3">werck</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Al stont het al in <rhyme label="d" type="m">brandt</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Door mijn machtighe <rhyme label="d" type="m" corresp="#s4:l7">handt</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">Alleen door mijnen <rhyme label="e" type="m">naem</rhyme>,</l>
        <l id="s4:l10" met="4" type="-+">Sal ick’t al doen vluchten <rhyme label="e" type="m" corresp="#s4:l9">gaen</rhyme>.</l>
      </lg>
    </lg>
  </text>

    <tags>
      <tag standard-name="loflied" translation="praise song">loflied</tag>
    </tags>
    <melody>Ik ben een arme pelgrim hier</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Willem de Swaen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">KOmt, laet ons <rhyme label="a" type="m">allega'er</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Een starcke Vrouw gaen <rhyme label="b" type="f">lo-ven</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Die als een Sonne, <rhyme label="a" type="m" corresp="#s1:l1">klaer</rhyme></l>
        <l id="s1:l4" met="2" type="-+">Verschijnt hier <rhyme label="b" type="f" corresp="#s1:l2">boven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Dewelcke daerze <rhyme label="a" type="m">hier</rhyme></l>
        <l id="s2:l2" met="3" type="-+">'t Valsch' aerdsche goet <rhyme label="b" type="f">versmaden</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Nu haer met recht <rhyme label="a" type="m" corresp="#s2:l1">playsier</rhyme></l>
        <l id="s2:l4" met="2" type="-+">Komt te <rhyme label="b" type="f" corresp="#s2:l2">versaden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Sy broght het vleys in <rhyme label="a" type="m">dwangh</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Sy badt by daeghs, en <rhyme label="b" type="f">nachten</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Haer deughd verwon den <rhyme label="a" type="m" corresp="#s3:l1">Slangh</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">En brack sijn <rhyme label="b" type="f" corresp="#s3:l2">krachten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">O Heer! laet door 't <rhyme label="a" type="m">gebed</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Van dese puyck der <rhyme label="b" type="f">vrouwen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Ontgaen ons 's vyands <rhyme label="a" type="m" corresp="#s4:l1">net</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">En zijn <rhyme label="b" type="f" corresp="#s4:l2">behouwen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Dat glory, lof, en <rhyme label="a" type="m">eer</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Zy d' Heyl'ghen Geest, en <rhyme label="b" type="f">Vader</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">En Godes Soon, ons' <rhyme label="a" type="m" corresp="#s5:l1">Heer</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">Des ziels <rhyme label="b" type="f" corresp="#s5:l2">versader</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

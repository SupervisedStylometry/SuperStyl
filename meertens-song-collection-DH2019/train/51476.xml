  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Meisjes trouwt ja niet zo <rhyme label="a" type="m">vroeg</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Geeft u niet in zorgen <rhyme label="a" type="m" corresp="#s1:l1">moe</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Trouwt ja met <rhyme label="b" type="m">genegenheid</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Leert maar eerst <rhyme label="b" type="m" corresp="#s1:l3">manierlykheid</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Als u de Jongmans lachen <rhyme label="a" type="m">aan</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Dan moet gy niet gedenken daar <rhyme label="a" type="m" corresp="#s2:l1">aan</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Want zy laaten jou wel <rhyme label="b" type="m">staan</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">En na de andere Meisjes <rhyme label="b" type="m" corresp="#s2:l3">gaan</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Meisje als gy geraaden wilt <rhyme label="a" type="m">zyn</rhyme>.</l>
        <l id="s3:l2" met="4" type="+-">Hy zo blyft nog maar wat <rhyme label="a" type="m" corresp="#s3:l1">alleen</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Als gy nog wat langer <rhyme label="b" type="m">wagt</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Jaadan word gy braaf <rhyme label="b" type="m" corresp="#s3:l3">uitgelacht</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Het gaat zo als het spreekwoord <rhyme label="a" type="m">is</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Alle Kogelen tressen ook <rhyme label="a" type="m" corresp="#s4:l1">niet</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">heeft hy er dan nog meer als <rhyme label="b" type="m">myn</rhyme>?</l>
        <l id="s4:l4" met="4" type="+-">Ja dan blyf ik gansch <rhyme label="b" type="m" corresp="#s4:l3">allyn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Had ik myn wat eer <rhyme label="a" type="m">bedagt</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Ik had my niet in het verdriet <rhyme label="a" type="m" corresp="#s5:l1">gebragt</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Andere meisjes speelen haar <rhyme label="b" type="m">rol</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">En ik moet zitten aan het <rhyme label="b" type="m" corresp="#s5:l3">wiegetouw</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Ik had my zo vast op hem <rhyme label="a" type="m">vertrouwd</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Ik had ook een kerk op hem <rhyme label="a" type="m" corresp="#s6:l1">gebouwd</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Maar om dat het niet anders kan <rhyme label="b" type="m">zyn</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Zo moet dat meisje bedrogen <rhyme label="b" type="m" corresp="#s6:l3">zyn</rhyme>,</l>
      </lg>
    </lg>
  </text>

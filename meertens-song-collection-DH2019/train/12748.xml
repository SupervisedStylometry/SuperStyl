  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">De soete Lent komt voor den <rhyme label="a" type="m">dagh</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">De Son gaet hooger als sy <rhyme label="b" type="f">plagh</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">En doet de Winter van ons <rhyme label="a" type="m" corresp="#s1:l1">trecken</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">En doet al weer de dagen <rhyme label="b" type="f" corresp="#s1:l2">recken</rhyme>:</l>
        <l id="s1:l5" met="2" type="-+">Mijn sinnen <rhyme label="b" type="f" corresp="#s1:l2">strecken</rhyme>,</l>
        <l id="s1:l6" met="3" type="+-">Tot een soet <rhyme label="c" type="m">gheval</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Om eens <rhyme label="b" type="f" corresp="#s1:l2">t’ontdecken</rhyme></l>
        <l id="s1:l8" met="3" type="+-">Watter beuren <rhyme label="c" type="m" corresp="#s1:l6">sal</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wat speurt men veel <rhyme label="a" type="m">veranderingh</rhyme>?</l>
        <l id="s2:l2" met="4" type="-+">De Velden staen gelijck <rhyme label="b" type="f">herbooren</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Men siet een jeuchtin alle <rhyme label="a" type="m" corresp="#s2:l1">dingh</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Dat door de koud’ scheen <rhyme label="b" type="f" corresp="#s2:l2">uyt-gevrooren</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">En heel <rhyme label="b" type="f" corresp="#s2:l2">verlooren</rhyme>:</l>
        <l id="s2:l6" met="3" type="+-">Gras en edel <rhyme label="c" type="m">Kruyt</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">Komt, als te <rhyme label="b" type="f" corresp="#s2:l2">vooren</rhyme>,</l>
        <l id="s2:l8" met="3" type="+-">Weder puylen <rhyme label="c" type="m" corresp="#s2:l6">uyt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Dit siende, denck ick aen de <rhyme label="a" type="m">standt</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Waer heen ick meer-mael word <rhyme label="b" type="f">gedreven</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">En segge, soo sal <rhyme label="a" type="m" corresp="#s3:l1">naderhandt</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Dit nietigh Vleysch weer zijn <rhyme label="b" type="f" corresp="#s3:l2">verheven</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Godt sal het <rhyme label="b" type="f" corresp="#s3:l2">geven</rhyme></l>
        <l id="s3:l6" met="3" type="+-">Een vernieuwde <rhyme label="c" type="m">jeucht</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">Tot schoonder <rhyme label="b" type="f" corresp="#s3:l2">leven</rhyme></l>
        <l id="s3:l8" met="3" type="+-">En volmaeckte <rhyme label="c" type="m" corresp="#s3:l6">vreucht</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Maer even als in dit <rhyme label="a" type="m">saysoen</rhyme></l>
        <l id="s4:l2" met="4" type="-+">d’Onkruyden haer oock <rhyme label="b" type="f">openbaren</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Alsoo sal Godt na desen <rhyme label="a" type="m" corresp="#s4:l1">doen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">En op ’t Bazuyn-geklanck <rhyme label="b" type="f" corresp="#s4:l2">af-varen</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">By een <rhyme label="b" type="f" corresp="#s4:l2">vergaren</rhyme></l>
        <l id="s4:l6" met="3" type="+-">Beyde goed’ en <rhyme label="c" type="m">quaet</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">Oud’, jongh van <rhyme label="b" type="f" corresp="#s4:l2">jaren</rhyme>,</l>
        <l id="s4:l8" met="3" type="+-">Hoogh en laegh van <rhyme label="c" type="m" corresp="#s4:l6">staet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Al die daer zijn van Adam <rhyme label="a" type="m">af</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Al die van de vlam zijn <rhyme label="b" type="f">toe-gesonden</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Al die vergaen zijn in het <rhyme label="a" type="m" corresp="#s5:l1">graf</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Of van het wild’ gediert’ <rhyme label="b" type="f" corresp="#s5:l2">verslonden</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">Of diepe <rhyme label="b" type="f" corresp="#s5:l2">gronden</rhyme></l>
        <l id="s5:l6" met="3" type="+-">Hebben <rhyme label="c" type="m">wegh-gerockt</rhyme>,</l>
        <l id="s5:l7" met="2" type="-+">Of <rhyme label="b" type="f" corresp="#s5:l2">Vissche-monden</rhyme></l>
        <l id="s5:l8" met="3" type="+-">Hebben <rhyme label="c" type="m" corresp="#s5:l6">ingeslockt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Het snel Trompet sal blasen <rhyme label="a" type="m">uyt</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Rijst Dooden, die daer legt <rhyme label="b" type="f">beneden</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">En even op dat groot <rhyme label="a" type="m" corresp="#s6:l1">geluyt</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Dat klincken sal aen alle <rhyme label="b" type="f" corresp="#s6:l2">steden</rhyme>,</l>
        <l id="s6:l5" met="2" type="-+">Sal fris van <rhyme label="b" type="f" corresp="#s6:l2">leden</rhyme>,</l>
        <l id="s6:l6" met="3" type="+-">Een <rhyme label="c" type="m">ontelbaerheyt</rhyme>,</l>
        <l id="s6:l7" met="2" type="-+">Voort-komen <rhyme label="b" type="f" corresp="#s6:l2">treden</rhyme></l>
        <l id="s6:l8" met="3" type="+-">Voor Gods <rhyme label="c" type="m" corresp="#s6:l6">Majesteyt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Dan sal het Lam, de <rhyme label="a" type="m">Bruydegom</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Sijn Schapen uyt de Bocken <rhyme label="b" type="f">scheyden</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">En seggen, Kom, mijn Vrienden <rhyme label="a" type="m" corresp="#s7:l1">kom</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Kom in ’t besit, ick sal u <rhyme label="b" type="f" corresp="#s7:l2">leyden</rhyme></l>
        <l id="s7:l5" met="2" type="-+">In vette <rhyme label="b" type="f" corresp="#s7:l2">Weyden</rhyme></l>
        <l id="s7:l6" met="3" type="+-">Op mijn Vaders <rhyme label="c" type="m">grondt</rhyme>,</l>
        <l id="s7:l7" met="2" type="-+">Die ‘k u <rhyme label="b" type="f" corresp="#s7:l2">bereyden</rhyme></l>
        <l id="s7:l8" met="3" type="+-">Eer de Werelt <rhyme label="c" type="m" corresp="#s7:l6">stondt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Mijn Woordt en hebt ghy niet <rhyme label="a" type="m">versmaet</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Daerom besit het Rijck mijns <rhyme label="b" type="f">Vaders</rhyme>:</l>
        <l id="s8:l3" met="4" type="-+">Maer ghy, wegh ghy vervloeckte <rhyme label="a" type="m" corresp="#s8:l1">gaet</rhyme></l>
        <l id="s8:l4" met="4" type="-+">In ’t eeuwigh vyer, wegh <rhyme label="b" type="f" corresp="#s8:l2">sonden-laders</rhyme>,</l>
        <l id="s8:l5" met="2" type="-+">En <rhyme label="b" type="f" corresp="#s8:l2">Godt-versmaders</rhyme>,</l>
        <l id="s8:l6" met="3" type="+-">Lijdt daer sonder <rhyme label="c" type="m">ent</rhyme>,</l>
        <l id="s8:l7" met="2" type="-+">Wegh ghy <rhyme label="b" type="f" corresp="#s8:l2">boosdaders</rhyme>,</l>
        <l id="s8:l8" met="3" type="+-">’k Heb u noyt <rhyme label="c" type="m" corresp="#s8:l6">gekent</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

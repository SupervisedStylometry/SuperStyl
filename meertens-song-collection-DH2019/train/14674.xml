  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">SEer weerdelijcke <rhyme label="a" type="f">Vrouwe</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Begaeft met <rhyme label="b" type="m">heerlijckheyt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Ghy zijt als 't Vlies vol <rhyme label="a" type="f" corresp="#s1:l1">douwe</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Dat Gedeon sach <rhyme label="b" type="m" corresp="#s1:l2">gespreyt</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Met <rhyme label="b" type="m" corresp="#s1:l2">wonderheyt</rhyme>:</l>
        <l id="s1:l6" met="3" type="-+">Want ghy ons dorre <rhyme label="c" type="f">aerde</rhyme></l>
        <l id="s1:l7" met="3" type="-+">De ware <rhyme label="b" type="m" corresp="#s1:l2">vochticheyt</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Christus Godts Soone <rhyme label="c" type="f" corresp="#s1:l6">baerde</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Boven de blauwe <rhyme label="a" type="f">boogen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Daer 's nachts de Sterren <rhyme label="b" type="m">haer</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Al glinst'rende <rhyme label="a" type="f" corresp="#s2:l1">vertooghen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Zijt ghy verheven <rhyme label="b" type="m" corresp="#s2:l2">klaer</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Hy die u <rhyme label="b" type="m" corresp="#s2:l2">daer</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Voorsichtich schiep te <rhyme label="c" type="f">vooren</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Hebt ghy ghesuyght daer <rhyme label="b" type="m" corresp="#s2:l2">naer</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Doen hy hier was <rhyme label="c" type="f" corresp="#s2:l6">gebooren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Het geen de droeve <rhyme label="a" type="f">Evae</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Wegh heeft genomen, <rhyme label="b" type="m">dat</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Hebt ghy ons weer <rhyme label="a" type="f" corresp="#s3:l1">gegeven</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Voor u vrucht-rijcke <rhyme label="b" type="m" corresp="#s3:l2">schat</rhyme>.</l>
        <l id="s3:l5" met="2" type="-+">Ghy die het <rhyme label="b" type="m" corresp="#s3:l2">vat</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Zijt daer het Hemels <rhyme label="c" type="f">Wieroock</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Sijn geur van heeft <rhyme label="b" type="m" corresp="#s3:l2">gehad</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">En ghy waert selfs het vyer, <rhyme label="c" type="f" corresp="#s3:l6">oock</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Soo zijt ghy dan een <rhyme label="a" type="f">glinster</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Voor ons bedroefde <rhyme label="b" type="m">dal</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Ia als een Hemels <rhyme label="a" type="f" corresp="#s4:l1">vinster</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Voor die zijn in <rhyme label="b" type="m" corresp="#s4:l2">misval</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Licht als <rhyme label="b" type="m" corresp="#s4:l2">Cristal</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Blinckt ghy, O Conincx <rhyme label="c" type="f">poorte</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Op dat wy souden <rhyme label="b" type="m" corresp="#s4:l2">al</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Schuwen de helsche <rhyme label="c" type="f" corresp="#s4:l6">soorten</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Ghy Heydenen verheucht, <rhyme label="a" type="f">u</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Dan: want ghy zijt nu <rhyme label="b" type="m">vry</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Gemaeckt: daerom ghy meucht, <rhyme label="a" type="f" corresp="#s5:l1">u</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Verlossingh' singen <rhyme label="b" type="m" corresp="#s5:l2">bly</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">V <rhyme label="b" type="m" corresp="#s5:l2">slaverny</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Is door een Maecht <rhyme label="c" type="f">ontbonden</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">En door Gods Soon heeft <rhyme label="b" type="m" corresp="#s5:l2">sy</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Het leven u <rhyme label="c" type="f" corresp="#s5:l6">ghesonden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Glori' zy u dan <rhyme label="a" type="f">Heere</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Die van soo suyver <rhyme label="b" type="m">Maecht</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Gheboren zijt: Wiens <rhyme label="a" type="f" corresp="#s6:l1">eere</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Men altijdt lof toe <rhyme label="b" type="m" corresp="#s6:l2">draecht</rhyme>:</l>
        <l id="s6:l5" met="2" type="-+">Want sy <rhyme label="b" type="m" corresp="#s6:l2">verjaecht</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Heeft, die ons hier <rhyme label="c" type="f">beroofden</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Door dien sy <rhyme label="b" type="m" corresp="#s6:l2">onvertsaecht</rhyme></l>
        <l id="s6:l8" met="3" type="-+">'t Hooft Olophernus <rhyme label="c" type="f" corresp="#s6:l6">kloofden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">V loven wy oock <rhyme label="a" type="f">Vader</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Die met den Heyl'gen <rhyme label="b" type="m">Geest</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">en Soone zijt te <rhyme label="a" type="f" corresp="#s7:l1">gader</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Van eeuwicheyt <rhyme label="b" type="m" corresp="#s7:l2">geweest</rhyme>,</l>
        <l id="s7:l5" met="2" type="-+">Dus soo <rhyme label="b" type="m" corresp="#s7:l2">geneest</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Al onse swaer <rhyme label="c" type="f">ellenden</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Op dat wy altijdt <rhyme label="b" type="m" corresp="#s7:l2">meest</rhyme></l>
        <l id="s7:l8" met="3" type="-+">V loven tot het <rhyme label="c" type="f" corresp="#s7:l6">ende</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

    <melody>Ingrat je veux mourir</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Guilielmus Bolognino</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">IGnati, van den <rhyme label="a" type="m">Heer</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Soo wonderlijck <rhyme label="b" type="f">verheven</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Ghedoocht dat ick u <rhyme label="a" type="m" corresp="#s1:l1">eer</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En prijs' u heylich <rhyme label="b" type="f" corresp="#s1:l2">leven</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Dat ons dient tot een <rhyme label="c" type="m">licht</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Tot allen deughden <rhyme label="c" type="m" corresp="#s1:l5">sticht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Godts meerder glorie <rhyme label="a" type="m">u</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Men sach altijdt <rhyme label="b" type="f">betrachten</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Noot die te soecken <rhyme label="a" type="m" corresp="#s2:l1">mu</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Met allen uwe <rhyme label="b" type="f" corresp="#s2:l2">crachten</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Dit was u eenich <rhyme label="c" type="m">wit</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Waer gh' op soo waert <rhyme label="c" type="m" corresp="#s2:l5">verhit</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Dit heeft u oock <rhyme label="a" type="m">verweckt</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Die Orden op te <rhyme label="b" type="f">stellen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Die hondert jaer nu <rhyme label="a" type="m" corresp="#s3:l1">breckt</rhyme></l>
        <l id="s3:l4" met="3" type="-+">De groote macht der <rhyme label="b" type="f" corresp="#s3:l2">hellen</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">De sond' en <rhyme label="c" type="m">kettery</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Verwint aen alle <rhyme label="c" type="m" corresp="#s3:l5">zy</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Waer door ghewonnen <rhyme label="a" type="m">is</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Die menichte van <rhyme label="b" type="f">zielen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Die hen in <rhyme label="a" type="m" corresp="#s4:l1">duysternis</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Door ongheloofheydt <rhyme label="b" type="f" corresp="#s4:l2">hielen</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Oft stonden in Godts <rhyme label="c" type="m">haet</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Door alderhande <rhyme label="c" type="m" corresp="#s4:l5">quaet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Ghy hebt Godts liefdes <rhyme label="a" type="m">brandt</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Allommentom <rhyme label="b" type="f">onsteken</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Door lauwheyt t' alle <rhyme label="a" type="m" corresp="#s5:l1">kant</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Allendich seer <rhyme label="b" type="f" corresp="#s5:l2">besweken</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">En Iesvs naem <rhyme label="c" type="m">hebdy</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Verbreyt aen alle <rhyme label="c" type="m" corresp="#s5:l5">zy</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Soo wonder heeft <rhyme label="a" type="m">ghebrant</rhyme></l>
        <l id="s6:l2" met="3" type="-+">U hert in 't vier der <rhyme label="b" type="f">minnen</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Aen Godt nu heel <rhyme label="a" type="m" corresp="#s6:l1">verpant</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Met allen uwe <rhyme label="b" type="f" corresp="#s6:l2">sinnen</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Soo seer van u <rhyme label="c" type="m">behert</rhyme></l>
        <l id="s6:l6" met="3" type="-+">De winst der zielen <rhyme label="c" type="m" corresp="#s6:l5">wert</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Hoe groot was u <rhyme label="a" type="m">ghemoedt</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Hoe crachtich u <rhyme label="b" type="f">betrouwen</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Dat ghy tot alle <rhyme label="a" type="m" corresp="#s7:l1">goedt</rhyme></l>
        <l id="s7:l4" met="3" type="-+">In alles hebt <rhyme label="b" type="f" corresp="#s7:l2">behouwen</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Gheweest nochtans die <rhyme label="c" type="m">zijt</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Soo nedrich t' alle <rhyme label="c" type="m" corresp="#s7:l5">tijdt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Hoe hooch hebd' in 't <rhyme label="a" type="m">ghebedt</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Ghestadich op <rhyme label="b" type="f">ghevloghen</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Van schepsels <rhyme label="a" type="m" corresp="#s8:l1">onbelet</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Soo dickwils <rhyme label="b" type="f" corresp="#s8:l2">opghetoghen</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Met Godt soo seer <rhyme label="c" type="m">ghemeyn</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Van herten al te <rhyme label="c" type="m" corresp="#s8:l5">reyn</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Lof zy u, grooten <rhyme label="a" type="m">Godt</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Hem die hier hebt <rhyme label="b" type="f">verheven</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Tot dit gheluckich <rhyme label="a" type="m" corresp="#s9:l1">lot</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">En eeuwich nu doet <rhyme label="b" type="f" corresp="#s9:l2">leven</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Gheeft ons dat wy <rhyme label="c" type="m">eenpaer</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Sijn stappen volghen <rhyme label="c" type="m" corresp="#s9:l5">naer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

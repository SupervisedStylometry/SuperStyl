    <melody>Hoe lig ik hier in deze ellende</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Hendrik Rintjes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Israel moeste <rhyme label="a" type="f">d’Eerstelinghen</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Soo van haer Veem als van haer <rhyme label="b" type="m">Land</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Gheheylight tot den Heere <rhyme label="a" type="f" corresp="#s1:l1">bringhen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">In sijn huys tot een <rhyme label="b" type="m" corresp="#s1:l2">offerhandt</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">Dit leert ons dat ons eerste <rhyme label="c" type="m">daghen</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Van onse Ieught hem best <rhyme label="c" type="m" corresp="#s1:l5">behaghen</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ieremias in sijne <rhyme label="a" type="f">klaghen</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Spreeckt: het is een kostelijck <rhyme label="b" type="m">dingh</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Het Iock in sijne Ieucht te <rhyme label="a" type="f" corresp="#s2:l1">draghen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Daer mee hy selfs gheladen <rhyme label="b" type="m" corresp="#s2:l2">gingh</rhyme>:</l>
        <l id="s2:l5" met="4" type="-+">Dit Iock is het Ghebodt des <rhyme label="c" type="m">Heeren</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Wilt dat te recht doch draghen <rhyme label="c" type="m" corresp="#s2:l5">leeren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Neemt dit Iock op, wilt Christus <rhyme label="a" type="f">volgen</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Sijn Iock is soet, licht is sijn <rhyme label="b" type="m">last</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Al is de Werelt daerom <rhyme label="a" type="f" corresp="#s3:l1">verbolghen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">En onvernoecht, houdt u doch <rhyme label="b" type="m" corresp="#s3:l2">vast</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Aen Godts Gebodt, ons hier <rhyme label="c" type="m">gegeven</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Tot onderwijs in ons jongh <rhyme label="c" type="m" corresp="#s3:l5">leven</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Vliedt doch de lusten der <rhyme label="a" type="f">jonckhede</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Maer jaeght Gherechtigheyt ook <rhyme label="b" type="m">nae</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">‘t Gheloof, de Liefde, en de <rhyme label="a" type="f" corresp="#s4:l1">Vrede</rhyme>:</l>
        <l id="s4:l4" met="4" type="-+">In al u wandel vroegh en <rhyme label="b" type="m" corresp="#s4:l2">spae</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Met alle die van herten <rhyme label="c" type="m">reyne</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Den Heer aen-roepen in ‘t <rhyme label="c" type="m" corresp="#s4:l5">ghemeyne</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">In uwe Ieught wilt doch <rhyme label="a" type="f">gedencken</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Uws Scheppers, eer u over <rhyme label="b" type="m">komt</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Den quaden dagh, die u sal <rhyme label="a" type="f" corresp="#s5:l1">krencken</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Als oudtheyt u ter aerden <rhyme label="b" type="m" corresp="#s5:l2">kromt</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">En uwe Sonn’ verliest haer <rhyme label="c" type="m">luyster</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">En Maen, en Sterren worden <rhyme label="c" type="m" corresp="#s5:l5">duyster</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ick eysch niet dat ghy niet soudt <rhyme label="a" type="f">rustigh</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Noch deughdigh vrolijck moghen <rhyme label="b" type="m">zijn</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">Maer dat ghy u wacht voor ‘t <rhyme label="a" type="f" corresp="#s6:l1">wellustigh</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Welck eynde loon tot droeve <rhyme label="b" type="m" corresp="#s6:l2">pijn</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Wat mach ons sulcken vreughde <rhyme label="c" type="m">baten</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Daer door ons Godt soude <rhyme label="c" type="m" corresp="#s6:l5">verlaten</rhyme>?</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Kinderkens wilt doch niet <rhyme label="a" type="f">beminnen</rhyme></l>
        <l id="s7:l2" met="4" type="-+">De Werelt, noch wat daer in <rhyme label="b" type="m">is</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Hanght ghy daer aen met hert en <rhyme label="a" type="f" corresp="#s7:l1">sinnen</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Soo loopt ghy’s Heeren weghen <rhyme label="b" type="m" corresp="#s7:l2">mis</rhyme>:</l>
        <l id="s7:l5" met="4" type="-+">En wordt door schoonen schijn <rhyme label="c" type="m">bedroghen</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Dus wilt haer doen te recht <rhyme label="c" type="m" corresp="#s7:l5">beoghen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Haer Vorst sal u voor ooghen <rhyme label="a" type="f">stellen</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Hoogh-moet, vleesch-lust, en <rhyme label="b" type="m">ooghen-lust</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Om u daer door neder te <rhyme label="a" type="f" corresp="#s8:l1">vellen</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Hierom ‘t ghemoedt doch wel <rhyme label="b" type="m" corresp="#s8:l2">toe-rust</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Met ‘t harnas Godts om uwe <rhyme label="c" type="m">leden</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">So meught ghy’s vyants macht <rhyme label="c" type="m" corresp="#s8:l5">vertreden</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Vertrouwt u Geloofs <rhyme label="a" type="f">mede-wercker</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Die ‘s vyants macht verwonnen <rhyme label="b" type="m">heeft</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Al was hy sterck, de Heer was <rhyme label="a" type="f" corresp="#s9:l1">stercker</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Die ons oock t’overwinnen <rhyme label="b" type="m" corresp="#s9:l2">gheeft</rhyme>:</l>
        <l id="s9:l5" met="4" type="-+">Om help wilt soecken, bidden, <rhyme label="c" type="m">kloppen</rhyme></l>
        <l id="s9:l6" met="4" type="-+">Sijn oor sal hy voor u niet <rhyme label="c" type="m" corresp="#s9:l5">stoppen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Moet ghy in droefheyts water <rhyme label="a" type="f">swammen</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Heel diep, dat gy haest most te <rhyme label="b" type="m">grondt</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Verheft tot hem uwes herten <rhyme label="a" type="f" corresp="#s10:l1">stemmen</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Hem, die de vroom’ in noot <rhyme label="b" type="m" corresp="#s10:l2">bystondt</rhyme>:</l>
        <l id="s10:l5" met="4" type="-+">Gheen leedt hoe groot kan u <rhyme label="c" type="m">bestelpen</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Als ‘t hem belieft hy kan <rhyme label="c" type="m" corresp="#s10:l5">uythelpen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Hy besoeckt niet boven <rhyme label="a" type="f">vermoghen</rhyme>:</l>
        <l id="s11:l2" met="4" type="-+">Maer geeft ons tot verdragen <rhyme label="b" type="m">kracht</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Wilt u veel neerstigher dan <rhyme label="a" type="f" corresp="#s11:l1">poghen</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Dat ghy sijn wille wel <rhyme label="b" type="m" corresp="#s11:l2">betracht</rhyme>.</l>
        <l id="s11:l5" met="4" type="-+">Is ‘t ‘s Heeren wil ons te <rhyme label="c" type="m">bedroeven</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">In tijtlijck, ‘t schiet om ons te <rhyme label="c" type="m" corresp="#s11:l5">proeven</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Het God’lijck treuren werckt <rhyme label="a" type="f">verblijden</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Een blijdtschap die niet en <rhyme label="b" type="m">vergaet</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Het is maer Vaderlijck <rhyme label="a" type="f" corresp="#s12:l1">kastijden</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Als Godt sijn kind’ren somtijdts <rhyme label="b" type="m" corresp="#s12:l2">slaet</rhyme>:</l>
        <l id="s12:l5" met="4" type="-+">‘t Is niet dat hy haer wil <rhyme label="c" type="m">bederven</rhyme>,</l>
        <l id="s12:l6" met="4" type="-+">Maer dat sy ‘t eeuwigh moghen <rhyme label="c" type="m" corresp="#s12:l5">erven</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">In ‘t eeuwigh sal duysent jaer <rhyme label="a" type="f">wesen</rhyme></l>
        <l id="s13:l2" met="4" type="-+">Soo kort als by ons eenen <rhyme label="b" type="m">dagh</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Met reyne herten wilt hem <rhyme label="a" type="f" corresp="#s13:l1">vresen</rhyme>:</l>
        <l id="s13:l4" met="4" type="-+">Want geen onreyn daer komen <rhyme label="b" type="m" corresp="#s13:l2">nach</rhyme>,</l>
        <l id="s13:l5" met="4" type="-+">Maer die hier gaen van deucht tot <rhyme label="c" type="m">deughden</rhyme>,</l>
        <l id="s13:l6" met="4" type="-+">Die komen inde Vreught der <rhyme label="c" type="m" corresp="#s13:l5">Vreughden</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Een vreugt diemen niet kan <rhyme label="a" type="f">beschrijven</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">Noch niet uyt-spreken met de <rhyme label="b" type="m">mondt</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Die hier tot eynd’ volstandigh <rhyme label="a" type="f" corresp="#s14:l1">blijven</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">En winningh doen met ‘s Heeren <rhyme label="b" type="m" corresp="#s14:l2">Pont</rhyme>,</l>
        <l id="s14:l5" met="4" type="-+">Verkrijght, maer die ‘t in d’aerde <rhyme label="c" type="m">spitten</rhyme>,</l>
        <l id="s14:l6" met="4" type="-+">Sullen Godts Rijcke niet <rhyme label="c" type="m" corresp="#s14:l5">besitten</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

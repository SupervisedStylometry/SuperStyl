    <melody>Ik had een gestadig minnetje</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Leenaert Clock</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Wy wenschen u met <rhyme label="a" type="f">namen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Ghenaed’ van Godt den <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Ghy ledekens te <rhyme label="a" type="f" corresp="#s1:l1">samen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Ghebaert deur Christi <rhyme label="b" type="m" corresp="#s1:l2">leer</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">T’Schiedam nu ttot Gods <rhyme label="b" type="m" corresp="#s1:l2">eer</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Beroepen en <rhyme label="c" type="f">vercoren</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Dit gheef u Godt te <rhyme label="c" type="f" corresp="#s1:l6">voren</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Sijn gonst by u <rhyme label="b" type="m" corresp="#s1:l2">vermeer</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Op dat ghy meucht <rhyme label="a" type="f">voortvaren</rhyme></l>
        <l id="s2:l2" met="3" type="-+">In desen quaden <rhyme label="b" type="m">tijdt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">V niet laten <rhyme label="a" type="f" corresp="#s2:l1">beswaren</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Nu in ws levens <rhyme label="b" type="m" corresp="#s2:l2">strijdt</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Ghy weet hoe dat ghy <rhyme label="b" type="m" corresp="#s2:l2">zijt</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Wt de Weerelt <rhyme label="c" type="f">ghecomen</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Int Rijcke Gods <rhyme label="c" type="f" corresp="#s2:l6">opghenomen</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Van Godt <rhyme label="b" type="m" corresp="#s2:l2">ghebenedijt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Wat sult ghy daer in <rhyme label="a" type="f">maken</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Men moet niet ledigh <rhyme label="b" type="m">staen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Elck een beproef sijn <rhyme label="a" type="f" corresp="#s3:l1">saken</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Of hy soo heeft <rhyme label="b" type="m" corresp="#s3:l2">ghedaen</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Nae des Heeren <rhyme label="b" type="m" corresp="#s3:l2">vermaen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En oft hy oock sal <rhyme label="c" type="f">wesen</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Van den Heere <rhyme label="c" type="f" corresp="#s3:l6">ghepresen</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Om in sijn vreuchd’ te <rhyme label="b" type="m" corresp="#s3:l2">gaen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Vrienden, hy comt seer <rhyme label="a" type="f">spoedioch</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Die’t oordeel gheven <rhyme label="b" type="m">sal</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Dan worden <rhyme label="a" type="f" corresp="#s4:l1">overvloedich</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Daer onse wercken <rhyme label="b" type="m" corresp="#s4:l2">al</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Openbaer groot en <rhyme label="b" type="m" corresp="#s4:l2">smal</rhyme>:</l>
        <l id="s4:l6" met="3" type="-+">Recht oordeel sal hy <rhyme label="c" type="f">wijsen</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">En dan alleene <rhyme label="c" type="f" corresp="#s4:l6">prijsen</rhyme></l>
        <l id="s4:l8" met="3" type="-+">D’uytvercoren <rhyme label="b" type="m" corresp="#s4:l2">ghetal</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Daer comen ons <rhyme label="a" type="f">ghedachten</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Alle ten oordeel <rhyme label="b" type="m">voort</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Hy maeckt oock sijne <rhyme label="a" type="f" corresp="#s5:l1">clachten</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Teghen d’onnutte <rhyme label="b" type="m" corresp="#s5:l2">woort</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Waer blijven dan <rhyme label="b" type="m" corresp="#s5:l2">verstoort</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Leughentael en t’quaet <rhyme label="c" type="f">spreken</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Faemrooven <rhyme label="c" type="f" corresp="#s5:l6">onbesweken</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">En wat daer aen <rhyme label="b" type="m" corresp="#s5:l2">behoort</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Goede en quade <rhyme label="a" type="f">wercken</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Ter rechter tijdt sal <rhyme label="b" type="m">hy</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Oordeelen naer’ t <rhyme label="a" type="f" corresp="#s6:l1">opmercken</rhyme>:</l>
        <l id="s6:l4" met="3" type="-+">Vrienden ghelooft het <rhyme label="b" type="m" corresp="#s6:l2">my</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Maeckt u van’t quaetdoen <rhyme label="b" type="m" corresp="#s6:l2">vry</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Hy laet ons niet <rhyme label="c" type="f">onschuldich</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Al is hy nu  <rhyme label="c" type="f" corresp="#s6:l6">verduldich</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Sijn straffe is nae <rhyme label="b" type="m" corresp="#s6:l2">by</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Alle gaven daer <rhyme label="a" type="f">neven</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Den Mensch in dit <rhyme label="b" type="m">pleyn</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Van Godt hem nu <rhyme label="a" type="f" corresp="#s7:l1">ghegheven</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Sy zijn groot ofte <rhyme label="b" type="m" corresp="#s7:l2">cleyn</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Worden daer <rhyme label="b" type="m" corresp="#s7:l2">alghemeyn</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Ghevordert met <rhyme label="c" type="f">verlanghen</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Die nu veel heeft <rhyme label="c" type="f" corresp="#s7:l6">ontfanghen</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Wordt veel gheeyscht <rhyme label="b" type="m" corresp="#s7:l2">certeyn</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Den dienst ons nu <rhyme label="a" type="f">bevolen</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Oock de Man aen sijn <rhyme label="b" type="m">Wijf</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">En t’Wijf oock <rhyme label="a" type="f" corresp="#s8:l1">onverholen</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Aen den Man int <rhyme label="b" type="m" corresp="#s8:l2">bedrijf</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Den kind’ren even <rhyme label="b" type="m" corresp="#s8:l2">stijf</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">En d’Ouders aen de <rhyme label="c" type="f">kinder</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Vrienden valt niet <rhyme label="c" type="f" corresp="#s8:l6">minder</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Het gheldt u ziel en <rhyme label="b" type="m" corresp="#s8:l2">lijf</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">En dat wy schuldich <rhyme label="a" type="f">waren</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">En wisten goet te <rhyme label="b" type="m">doen</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Laten wy dat nu <rhyme label="a" type="f" corresp="#s9:l1">varen</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Zijn int versuymen <rhyme label="b" type="m" corresp="#s9:l2">coen</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Hy salt ons daer <rhyme label="b" type="m" corresp="#s9:l2">bevroen</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Als hy sal zijn <rhyme label="c" type="f">verbolghen</rhyme></l>
        <l id="s9:l7" met="3" type="-+">Sal t’loon den wercken <rhyme label="c" type="f" corresp="#s9:l6">volghen</rhyme></l>
        <l id="s9:l8" met="3" type="-+">Sonder eenich <rhyme label="b" type="m" corresp="#s9:l2">versoen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">En soo wy dan noch <rhyme label="a" type="f">meere</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Erghernis gheven <rhyme label="b" type="m">hier</rhyme></l>
        <l id="s10:l3" met="3" type="-+">In leven ofte <rhyme label="a" type="f" corresp="#s10:l1">leere</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Buyten Christi <rhyme label="b" type="m" corresp="#s10:l2">manier</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Wee, met grooten <rhyme label="b" type="m" corresp="#s10:l2">ghetier</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Wordt over ons <rhyme label="c" type="f">gheropen</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Wy moeten dier <rhyme label="c" type="f" corresp="#s10:l6">becopen</rhyme></l>
        <l id="s10:l8" met="3" type="-+">Daer in het helsche <rhyme label="b" type="m" corresp="#s10:l2">vyer</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Vrienden wat zijnder <rhyme label="a" type="f">leeren</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Van Christo ons <rhyme label="b" type="m">gheleert</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Sijnen Vader ter <rhyme label="a" type="f" corresp="#s11:l1">eeren</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Heeft hy hem seer <rhyme label="b" type="m" corresp="#s11:l2">verneert</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Ghehoorsaemheyt <rhyme label="b" type="m" corresp="#s11:l2">vermeert</rhyme></l>
        <l id="s11:l6" met="3" type="-+">Hy is ons voor <rhyme label="c" type="f">gheganghen</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">Wy moeten met <rhyme label="c" type="f" corresp="#s11:l6">verlanghen</rhyme></l>
        <l id="s11:l8" met="3" type="-+">Hem soo volghen <rhyme label="b" type="m" corresp="#s11:l2">bekeert</rhyme></l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Dat elck een dit <rhyme label="a" type="f">bedochte</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">En leefde naer’t <rhyme label="b" type="m">betaem</rhyme></l>
        <l id="s12:l3" met="3" type="-+">Terwijlen hy’t <rhyme label="a" type="f" corresp="#s12:l1">vermochte</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">En brocht vrucht <rhyme label="b" type="m" corresp="#s12:l2">aenghenaem</rhyme></l>
        <l id="s12:l5" met="3" type="-+">Als een rancxken <rhyme label="b" type="m" corresp="#s12:l2">bequaem</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Tot love, Godt ter <rhyme label="c" type="f">eeren</rhyme>,</l>
        <l id="s12:l7" met="3" type="-+">Om sijn Rijck te <rhyme label="c" type="f" corresp="#s12:l6">vermeeren</rhyme>,</l>
        <l id="s12:l8" met="3" type="-+">En prijs van sijnen <rhyme label="b" type="m" corresp="#s12:l2">Naem</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Op dat ghy dan meucht <rhyme label="a" type="f">hooren</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Comt hier, mijn Rijck <rhyme label="b" type="m">besit</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">V langh bereydt te <rhyme label="a" type="f" corresp="#s13:l1">vooren</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Doet aen cleederen <rhyme label="b" type="m" corresp="#s13:l2">wit</rhyme>:</l>
        <l id="s13:l5" met="3" type="-+">Vrienden ick wensch u <rhyme label="b" type="m" corresp="#s13:l2">dit</rhyme>,</l>
        <l id="s13:l6" met="3" type="-+">Dat ick daer mach <rhyme label="c" type="f">vergaren</rhyme>,</l>
        <l id="s13:l7" met="3" type="-+">Doch den Heer der <rhyme label="c" type="f" corresp="#s13:l6">heyrscharen</rhyme></l>
        <l id="s13:l8" met="3" type="-+">Ghestadich voor my <rhyme label="b" type="m" corresp="#s13:l2">bidt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

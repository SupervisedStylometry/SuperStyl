  <author>Willem de Swaen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">MAria stondt aen 't <rhyme label="a" type="m">kruys</rhyme></l>
        <l id="s1:l2" met="3" type="-+">In 't midden van 't <rhyme label="a" type="m" corresp="#s1:l1">gespuys</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Der hert-geneckte <rhyme label="b" type="f">Jooden</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Die Iesum haren <rhyme label="c" type="m">Soon</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Uyt nijd, en gramschap <rhyme label="b" type="f" corresp="#s1:l3">dooden</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Met eene doorne kroon.   Die <rhyme label="c" type="m" corresp="#s1:l4">Iesum</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Sy stond vervult met <rhyme label="a" type="m">smert</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Het swaert doorsne' haer <rhyme label="a" type="m" corresp="#s2:l1">hert</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Met hondert duysent <rhyme label="b" type="f">pijnen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Als Sy ons' <rhyme label="c" type="m">Medicijn</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Uyt haer oogh sagh <rhyme label="b" type="f" corresp="#s2:l3">verdwijnen</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Door overgroote <rhyme label="c" type="m" corresp="#s2:l4">pijn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Hoe groot was haren <rhyme label="a" type="m">rouw</rhyme>!</l>
        <l id="s3:l2" met="3" type="-+">Hoe droef was dese <rhyme label="a" type="m" corresp="#s3:l1">Vrouw</rhyme>!</l>
        <l id="s3:l3" met="3" type="-+">Hoe beefden Godes <rhyme label="b" type="f">moeder</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Als aen het kruys <rhyme label="c" type="m">doorwondt</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Sy sagh onsen <rhyme label="b" type="f" corresp="#s3:l3">Behoeder</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Beneffen wien Sy <rhyme label="c" type="m" corresp="#s3:l4">stondt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Wie sou dan schreyen <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Als hy in sulck <rhyme label="a" type="m" corresp="#s4:l1">verdriet</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Goods Moeder aen sou <rhyme label="b" type="f">schouwen</rhyme>?</l>
        <l id="s4:l4" met="3" type="-+">Wie sou in dese <rhyme label="c" type="m">Maeght</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Sich ten hooghst' niet <rhyme label="b" type="f" corresp="#s4:l3">benouwen</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Die soo bermhartigh <rhyme label="c" type="m" corresp="#s4:l4">klaeght</rhyme>?</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Sy sagh haer lieve <rhyme label="a" type="m">kind</rhyme></l>
        <l id="s5:l2" met="3" type="-+">(Wien S' altijd had <rhyme label="a" type="m" corresp="#s5:l1">bemint</rhyme>)</l>
        <l id="s5:l3" met="3" type="-+">Voor sijn gemeente <rhyme label="b" type="f">lijden</rhyme>;</l>
        <l id="s5:l4" met="3" type="-+">Sy sagh Hem in <rhyme label="c" type="m">torment</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Jae Sy sagh vromigh <rhyme label="b" type="f" corresp="#s5:l3">strijden</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Jesum tot 't laetste <rhyme label="c" type="m" corresp="#s5:l4">end</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Sy sagh sijn laetste <rhyme label="a" type="m">noodt</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">En sijne bitt're <rhyme label="a" type="m" corresp="#s6:l1">dood</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Sy sach 't met natte <rhyme label="b" type="f">oogen</rhyme>.</l>
        <l id="s6:l4" met="3" type="-+">Wie sal met dese <rhyme label="c" type="m">Vrouw</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Dan niet hebben <rhyme label="b" type="f" corresp="#s6:l3">medoogen</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Die is vervult met <rhyme label="c" type="m" corresp="#s6:l4">rouw</rhyme>?</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">O liefdens groot <rhyme label="a" type="m">Fonteyn</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">O vrouw van 's hemels <rhyme label="a" type="m" corresp="#s7:l1">pleyn</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Goods Moeder <rhyme label="b" type="f">uytgelesen</rhyme>!</l>
        <l id="s7:l4" met="3" type="-+">Maeckt dat ick uwen <rhyme label="c" type="m">druck</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Hier deelachtich mach <rhyme label="b" type="f" corresp="#s7:l3">wesen</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">'k Sal 't achten voor <rhyme label="c" type="m" corresp="#s7:l4">geluck</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Maeckt dat mijn hertje <rhyme label="a" type="m">blaeckt</rhyme></l>
        <l id="s8:l2" met="3" type="-+">In d' liefde Goods, en <rhyme label="a" type="m" corresp="#s8:l1">maeckt</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Dat ick uw' Soon <rhyme label="b" type="f">behage</rhyme>;</l>
        <l id="s8:l4" met="3" type="-+">Maeckt dat ick in sijn <rhyme label="c" type="m">lyen</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Mach all' mijns levens <rhyme label="b" type="f" corresp="#s8:l3">dagen</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Ten hooghsten my <rhyme label="c" type="m" corresp="#s8:l4">verblyen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Ghy die soo droevigh <rhyme label="a" type="m">queelt</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Uw' droefheyd met my <rhyme label="a" type="m" corresp="#s9:l1">deelt</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Die Ghy hebt veel <rhyme label="b" type="f">geleden</rhyme>;</l>
        <l id="s9:l4" met="3" type="-+">Laet my met recht <rhyme label="c" type="m">gemoed</rhyme></l>
        <l id="s9:l5" met="3" type="-+">All' mijn gepeyns <rhyme label="b" type="f" corresp="#s9:l3">besteden</rhyme></l>
        <l id="s9:l6" met="3" type="-+">In Jesu Christi <rhyme label="c" type="m" corresp="#s9:l4">bloed</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Ick wensch met u te <rhyme label="a" type="m">gaen</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">En onder 't kruys te <rhyme label="a" type="m" corresp="#s10:l1">staen</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Soo langh als ick sal <rhyme label="b" type="f">leven</rhyme>:</l>
        <l id="s10:l4" met="3" type="-+">Wilt my dit weyg'ren <rhyme label="c" type="m">niet</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Maer laet ick my <rhyme label="b" type="f" corresp="#s10:l3">begeven</rhyme></l>
        <l id="s10:l6" met="3" type="-+">By U in dit <rhyme label="c" type="m" corresp="#s10:l4">verdriet</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Maeckt dat ick dragen <rhyme label="a" type="m">mach</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Tot mijnen laetsten <rhyme label="a" type="m" corresp="#s11:l1">dagh</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">In 't hert des Heeren <rhyme label="b" type="f">Wonden</rhyme>;</l>
        <l id="s11:l4" met="3" type="-+">Maeckt dat ick in dat <rhyme label="c" type="m">Bad</rhyme></l>
        <l id="s11:l5" met="3" type="-+">Wasschen mach mijne <rhyme label="b" type="f" corresp="#s11:l3">sonden</rhyme></l>
        <l id="s11:l6" met="3" type="-+">O aldereelste <rhyme label="c" type="m" corresp="#s11:l4">Vat</rhyme>!</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Maeckt dat ick werd <rhyme label="a" type="m">gewondt</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Van binnen tot de <rhyme label="a" type="m" corresp="#s12:l1">grond</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Door liefd' tot d' Heer der <rhyme label="b" type="f">Heeren</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Die ons bemint heeft <rhyme label="c" type="m">zeer</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">Die door U, ons <rhyme label="b" type="f" corresp="#s12:l3">vereeren</rhyme></l>
        <l id="s12:l6" met="3" type="-+">Wil 's hemels hooge <rhyme label="c" type="m" corresp="#s12:l4">eer</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Dies weert my waerde <rhyme label="a" type="m">Maeght</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Als Satan my <rhyme label="a" type="m" corresp="#s13:l1">beklaeght</rhyme></l>
        <l id="s13:l3" met="3" type="-+">In 't schroomelijcke <rhyme label="b" type="f">Oordeel</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Maeckt dat mijn ziel <rhyme label="c" type="m">geniet</rhyme></l>
        <l id="s13:l5" met="3" type="-+">Dese gunst, en dit <rhyme label="b" type="f" corresp="#s13:l3">voordeel</rhyme></l>
        <l id="s13:l6" met="3" type="-+">Datz' eeuwigh Iesum <rhyme label="c" type="m" corresp="#s13:l4">siet</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Maeckt dat ick werd <rhyme label="a" type="m">gespaert</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Maeckt dat ick werd <rhyme label="a" type="m" corresp="#s14:l1">bewaert</rhyme></l>
        <l id="s14:l3" met="3" type="-+">Door 't Kruys, waer aen <rhyme label="b" type="f">gehangen</rhyme></l>
        <l id="s14:l4" met="3" type="-+">Heeft Christus voor ons <rhyme label="c" type="m">all'</rhyme>,</l>
        <l id="s14:l5" met="3" type="-+">Brenght, (waer nae wy <rhyme label="b" type="f" corresp="#s14:l3">verlangen</rhyme>)</l>
        <l id="s14:l6" met="3" type="-+">Ons binnen 's hemels <rhyme label="c" type="m" corresp="#s14:l4">wall'</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

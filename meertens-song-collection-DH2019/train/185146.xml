    <melody>Het vinnige stralen van de zon</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Dat eenigh Godtlijck wesen <rhyme label="a" type="m">soet</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Wil uwen Geest <rhyme label="b" type="f">bedouwen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Op dat ghy met een reyn <rhyme label="a" type="m" corresp="#s1:l1">ghemoet</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Godts aensicht meught <rhyme label="b" type="f" corresp="#s1:l2">aenschouwen</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Wiens zuyver licht // de herten <rhyme label="c" type="m">sticht</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Die vast op hem <rhyme label="b" type="f" corresp="#s1:l2">betrouwen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Siet welcken liefde ons <rhyme label="a" type="m">gheschiet</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Dat wy Godts kinders <rhyme label="b" type="f">hieten</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Maer openbaer en ist noch <rhyme label="a" type="m" corresp="#s2:l1">niet</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Wat wy sullen <rhyme label="b" type="f" corresp="#s2:l2">ghenieten</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Wanneer hy sal // sijn liefde <rhyme label="c" type="m">al</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Over de syne <rhyme label="b" type="f" corresp="#s2:l2">gieten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Sijn Engelen met soet <rhyme label="a" type="m">gheluyt</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Sullen sijn <rhyme label="b" type="f">uytvercoren</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">In allen plaetsen soecken <rhyme label="a" type="m" corresp="#s3:l1">uyt</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En brenghense te <rhyme label="b" type="f" corresp="#s3:l2">voren</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Daer sal met een // hoe arm oft <rhyme label="c" type="m">cleen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Voor hem blyven <rhyme label="b" type="f" corresp="#s3:l2">verloren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Al sijnse creupel, lam, of <rhyme label="a" type="m">blint</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Veracht ende <rhyme label="b" type="f">verschoven</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Alsmense reyn van herten <rhyme label="a" type="m" corresp="#s4:l1">vint</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Men salse brenghen <rhyme label="b" type="f" corresp="#s4:l2">boven</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Daer sullen sy // van herten <rhyme label="c" type="m">bly</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Godt in der claerheyt <rhyme label="b" type="f" corresp="#s4:l2">loven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Want door de liefde die hy <rhyme label="a" type="m">heeft</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Maeckt hyse hem <rhyme label="b" type="f">ghelijcke</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Sijn eyghen claerheyt hy haer <rhyme label="a" type="m" corresp="#s5:l1">geeft</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Al in sijns vaders <rhyme label="b" type="f" corresp="#s5:l2">rycke</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Sijn heerlijckheyt // is haer <rhyme label="c" type="m">bereyt</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Op dat sijn liefde <rhyme label="b" type="f" corresp="#s5:l2">blijcke</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Veel duysent Heylighen <rhyme label="a" type="m">valliant</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Sullen daer blinvken <rhyme label="b" type="f">schoone</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Ontfanghen van des Heeren <rhyme label="a" type="m" corresp="#s6:l1">hant</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Des levens rijcke <rhyme label="b" type="f" corresp="#s6:l2">croone</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Elck een sal daer // verschijnen <rhyme label="c" type="m">claer</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">In sijn eyghen <rhyme label="b" type="f" corresp="#s6:l2">persoone</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">De oude vrienden langh voor <rhyme label="a" type="m">heen</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Ghestorven en <rhyme label="b" type="f">vergheten</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Die sullen daer comen by <rhyme label="a" type="m" corresp="#s7:l1">een</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Hemelsche spyse <rhyme label="b" type="f" corresp="#s7:l2">eten</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Als sy verheucht // en vol van <rhyme label="c" type="m">vreught</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Te samen sijn <rhyme label="b" type="f" corresp="#s7:l2">gheseten</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">De schaepkens die nu sijn <rhyme label="a" type="m">verstroyt</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Hier ende daer <rhyme label="b" type="f">verscheyden</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Die werden ‘t samen dan <rhyme label="a" type="m" corresp="#s8:l1">ghekoyt</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Het Lam dat salse <rhyme label="b" type="f" corresp="#s8:l2">weyden</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">En nimmermeer // sullen sy <rhyme label="c" type="m">weer</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Van malcanderen <rhyme label="b" type="f" corresp="#s8:l2">scheyden</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Hoe lieff’lijck sal met vreughden <rhyme label="a" type="m">fijn</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Dat soet gheselschap <rhyme label="b" type="f">leven</rhyme>:</l>
        <l id="s9:l3" met="4" type="-+">Elck een sal geern de minste <rhyme label="a" type="m" corresp="#s9:l1">sijn</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Wt liefde soo <rhyme label="b" type="f" corresp="#s9:l2">ghedreven</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Waert moghelijck // het gantsche <rhyme label="c" type="m">rijck</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Souden sy <rhyme label="b" type="f" corresp="#s9:l2">overgheven</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Want sy als een doorluchtigh <rhyme label="a" type="m">vyer</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Van liefde sullen <rhyme label="b" type="f">gloeyen</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Al wat sy geven <rhyme label="a" type="m" corresp="#s10:l1">goedertier</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Sal hondertfout in <rhyme label="b" type="f" corresp="#s10:l2">vloeyen</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">En haer fonteyn // en wort niet <rhyme label="c" type="m">cleyn</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Maer sy sal eeuwigh <rhyme label="b" type="f" corresp="#s10:l2">groeyen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Al in haers vaders lieve <rhyme label="a" type="m">huys</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Sijn woninghen by <rhyme label="b" type="f">velen</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Daer sullen sy bevrijt van <rhyme label="a" type="m" corresp="#s11:l1">cruys</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Seer lieffelijck in <rhyme label="b" type="f" corresp="#s11:l2">spelen</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Dat duysent jaer // een dagh is <rhyme label="c" type="m">maer</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Soo weynigh salt <rhyme label="b" type="f" corresp="#s11:l2">vervelen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Wt aengheporde soete <rhyme label="a" type="m">minn</rhyme>’</l>
        <l id="s12:l2" met="3" type="-+">Sullen sy met <rhyme label="b" type="f">verkloecken</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Als Enghelen vlieghen uyt en <rhyme label="a" type="m" corresp="#s12:l1">in</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Malcanderen <rhyme label="b" type="f" corresp="#s12:l2">besoecken</rhyme>,</l>
        <l id="s12:l5" met="4" type="-+">Want Liefd’ is daer // in ‘t <rhyme label="c" type="m">openbaer</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Niet heymelijck in <rhyme label="b" type="f" corresp="#s12:l2">hoecken</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Hier is liefd’ met vlees <rhyme label="a" type="m">bekleet</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Ghekrenckt in haer <rhyme label="b" type="f">vermoghen</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Soo dat men niet soo claer en <rhyme label="a" type="m" corresp="#s13:l1">weet</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Waer dat sy leyt <rhyme label="b" type="f" corresp="#s13:l2">gheboghen</rhyme>,</l>
        <l id="s13:l5" met="4" type="-+">Alleen present // is sy <rhyme label="c" type="m">bekent</rhyme>,</l>
        <l id="s13:l6" met="3" type="-+">Den Goddelijcken <rhyme label="b" type="f" corresp="#s13:l2">ooghen</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Het is de liefde wel en <rhyme label="a" type="m">pijn</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Als mense niet can <rhyme label="b" type="f">vaten</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Als sy dan sal soo kenbaer <rhyme label="a" type="m" corresp="#s14:l1">sijn</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">Hoe wil sy haer uyt <rhyme label="b" type="f" corresp="#s14:l2">laten</rhyme>,</l>
        <l id="s14:l5" met="4" type="-+">Met wat een vreught // sal sy haer <rhyme label="c" type="m">deugt</rhyme>,</l>
        <l id="s14:l6" met="3" type="-+">Wt-breyden boven <rhyme label="b" type="f" corresp="#s14:l2">maten</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Eensdeels is hier <rhyme label="a" type="m">ghetuyghenis</rhyme>,</l>
        <l id="s15:l2" met="3" type="-+">Hoe groot de vreught sal <rhyme label="b" type="f">wesen</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">Godt aen te sien ghelijck hy <rhyme label="a" type="m" corresp="#s15:l1">is</rhyme>,</l>
        <l id="s15:l4" met="3" type="-+">‘t Ghedencken doet <rhyme label="b" type="f" corresp="#s15:l2">ghenesen</rhyme>,</l>
        <l id="s15:l5" met="4" type="-+">Hoe veel te meer // als wy den <rhyme label="c" type="m">Heer</rhyme>,</l>
        <l id="s15:l6" met="3" type="-+">Aenschouwen in het <rhyme label="b" type="f" corresp="#s15:l2">wesen</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Wie dese hope in hem <rhyme label="a" type="m">heeft</rhyme>,</l>
        <l id="s16:l2" met="3" type="-+">Reynight hem selven <rhyme label="b" type="f">mede</rhyme>,</l>
        <l id="s16:l3" met="4" type="-+">Ghelijck hy reyn is, en hy <rhyme label="a" type="m" corresp="#s16:l1">leeft</rhyme>,</l>
        <l id="s16:l4" met="3" type="-+">Met Godt in <rhyme label="b" type="f" corresp="#s16:l2">eenighede</rhyme>,</l>
        <l id="s16:l5" met="4" type="-+">Al comter druck // of <rhyme label="c" type="m">ongheluck</rhyme>,</l>
        <l id="s16:l6" met="3" type="-+">Inwendigh heeft hy <rhyme label="b" type="f" corresp="#s16:l2">vrede</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

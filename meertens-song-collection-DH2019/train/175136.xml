<song>
  <meta>
    <id>175136</id>
    <date>
      <year-start>1861</year-start>
      <year-end>1861</year-end>
    </date>
    <tags>
      <tag standard-name="kinderlied" translation="children's song">kinderlied</tag>
    </tags>
    <melody/>
    <categories>
      <category translation="children">kinderen</category>
    </categories>
  <author>Jan Pieter Heije</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Blaauw bloempje-lief, vergeet mij <rhyme label="a" type="m">niet</rhyme>!</l>
        <l id="s1:l2" met="4" type="-+">Hoe komt het toch, als aan de <rhyme label="a" type="m" corresp="#s1:l1">vliet</rhyme></l>
        <l id="s1:l3" met="2" type="-+">Mijn oog u <rhyme label="a" type="m" corresp="#s1:l1">ziet</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Dat ik van alle lieve <rhyme label="b" type="f">menschen</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Als gij, niet vragen durf en <rhyme label="b" type="f" corresp="#s1:l4">wenschen</rhyme>:</l>
        <l id="s1:l6" met="2" type="-+">‘Vergeet mij <rhyme label="a" type="m" corresp="#s1:l1">niet</rhyme>!’</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Och, bloempje-lief, ik weet het <rhyme label="a" type="m">wel</rhyme>!...</l>
        <l id="s2:l2" met="4" type="-+">Maar 'k bidje, zoo ik 't u <rhyme label="a" type="m" corresp="#s2:l1">vertel</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Vergeet het <rhyme label="a" type="m" corresp="#s2:l1">snel</rhyme>...</l>
        <l id="s2:l4" met="4" type="-+">Ik zou op véle, véle <rhyme label="b" type="f">dagen</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Met angst en schaamte moeten <rhyme label="b" type="f" corresp="#s2:l4">vragen</rhyme>:</l>
        <l id="s2:l6" met="2" type="-+">‘Vergeet mij <rhyme label="a" type="m" corresp="#s2:l1">wel</rhyme>!’</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Blaauw bloempje-lief, vergeet mij <rhyme label="a" type="m">niet</rhyme>!</l>
        <l id="s3:l2" met="4" type="-+">'k Beloof 't u - als weêr aan de <rhyme label="a" type="m" corresp="#s3:l1">vliet</rhyme></l>
        <l id="s3:l3" met="2" type="-+">Mijn oog u <rhyme label="a" type="m" corresp="#s3:l1">ziet</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Dat ik van alle lieve <rhyme label="b" type="f">menschen</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Als gij, durf vragen en durf <rhyme label="b" type="f" corresp="#s3:l4">wenschen</rhyme>:</l>
        <l id="s3:l6" met="2" type="-+">‘Vergeet mij <rhyme label="a" type="m" corresp="#s3:l1">niet</rhyme>!’</l>
      </lg>
    </lg>
  </text>
</song>

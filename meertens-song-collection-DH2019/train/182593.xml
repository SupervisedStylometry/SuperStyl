      <year-start>1800</year-start>
      <year-end>1800</year-end>
    </date>
    <tags/>
    <melody/>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Daar ging een Boer uit <rhyme label="a" type="m">ryden</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Langs een zoo'n groene <rhyme label="a" type="m" corresp="#s1:l1">hyden</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Langs een zoo'n groene <rhyme label="b" type="m">laan</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Daar vondt hy een Meisje <rhyme label="b" type="m" corresp="#s1:l3">staan</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Het Meisje sprak wel landman <rhyme label="a" type="m">hoort</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Hoe ryd gy zo driftig <rhyme label="a" type="m" corresp="#s2:l1">voort</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Ryd gy zo na die <rhyme label="b" type="m">steê</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Neemt my op jou wagen <rhyme label="b" type="m" corresp="#s2:l3">meê</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Den Boer die dagt heel <rhyme label="a" type="m">vaardig</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Dat lykt een Meisje <rhyme label="a" type="m" corresp="#s3:l1">aardig</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">My stondt stil met zyn <rhyme label="b" type="m">sleê</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">En hy nam het Meisje <rhyme label="b" type="m" corresp="#s3:l3">meê</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Wel Boertje wat heb gy in u <rhyme label="a" type="m">mand</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Waar op den Boer sprak <rhyme label="a" type="m" corresp="#s4:l1">viegeland</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Voogelen groot en <rhyme label="b" type="m">klyn</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Ik verkoopse by het <rhyme label="b" type="m" corresp="#s4:l3">douzyn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Heb gy daar toe een voogele <rhyme label="a" type="m">zang</rhyme>.</l>
        <l id="s5:l2" met="4" type="-+">Ik zal 'er jou helpen <rhyme label="a" type="m" corresp="#s5:l1">aan</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Dan geef ik u <rhyme label="b" type="m">kontant</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Daar nog geld voor in jou <rhyme label="b" type="m" corresp="#s5:l3">handt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Den boer nam zyn <rhyme label="a" type="m">Patrysje</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Hy wees hem aan het <rhyme label="a" type="m" corresp="#s6:l1">Meisje</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Hy zy schoon <rhyme label="b" type="m">engelin</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Is dat beesje na jou <rhyme label="b" type="m" corresp="#s6:l3">zin</rhyme>,</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Of wil gy hebben eene <rhyme label="a" type="m">snip</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Die kan sp[...]eren wip, wip, <rhyme label="a" type="m" corresp="#s7:l1">wip</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Of een zoo'n braave <rhyme label="b" type="m">Vink</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Ik heb 'er een hy is zo <rhyme label="b" type="m" corresp="#s7:l3">flink</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">De Snip kwam <rhyme label="a" type="m">aangevlooge</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Wel op haar knip <rhyme label="a" type="m" corresp="#s8:l1">gevloogen</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Met een raakte hy daar <rhyme label="b" type="m">in</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Dat was net het meisjes <rhyme label="b" type="m" corresp="#s8:l3">zin</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Die Snip die is 'er in <rhyme label="a" type="m">gegaan</rhyme>.</l>
        <l id="s9:l2" met="4" type="-+">En voort de knip wierd digt <rhyme label="a" type="m" corresp="#s9:l1">gedaan</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">En hy ging wip, wip, <rhyme label="b" type="m">wip</rhyme>.</l>
        <l id="s9:l4" met="4" type="-+">Toen hy moe was in de <rhyme label="b" type="m" corresp="#s9:l3">knip</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Den Boer sprak met <rhyme label="a" type="m">verrassen</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Wilt nu terdeeg <rhyme label="a" type="m" corresp="#s10:l1">oppassen</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Want daar is een Vink op <rhyme label="b" type="m">streek</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Die wil drinken uit jou <rhyme label="b" type="m" corresp="#s10:l3">beek</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Het Meisje sprak ik voel hem <rhyme label="a" type="m">wel</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">En met kreeg zy het in haar <rhyme label="a" type="m" corresp="#s11:l1">vel</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Zo dat het vinkje <rhyme label="b" type="m">was</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Schier verzoopen in die <rhyme label="b" type="m" corresp="#s11:l3">plas</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Den Boer sprak met <rhyme label="a" type="m">verlangen</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Nu is hy al <rhyme label="a" type="m" corresp="#s12:l1">gevangen</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Vogel, Patrys en <rhyme label="b" type="m">Snip</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Alles in jou Voogle <rhyme label="b" type="m" corresp="#s12:l3">knip</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Het Meisje fprak daar is tot <rhyme label="a" type="m">loon</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Een drinkpenning een goude <rhyme label="a" type="m" corresp="#s13:l1">kroon</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Ryd 'er nu maar na de <rhyme label="b" type="m">Steê</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">En neemen al de Vogeltjes <rhyme label="b" type="m" corresp="#s13:l3">meé</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

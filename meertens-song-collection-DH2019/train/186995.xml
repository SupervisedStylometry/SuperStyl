    <tags/>
    <melody>Breek uw pijlen</melody>
  <author>Jan van Hoogstraten</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Zal mijn leed dan nimmer <rhyme label="a" type="f">enden</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Zult ge uw oog steeds van my <rhyme label="a" type="f" corresp="#s1:l1">wenden</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Heerser van het wijd <rhyme label="b" type="m">heelal</rhyme>?</l>
        <l id="s1:l4" met="4" type="+-">Zie eens op mijn <rhyme label="b" type="m" corresp="#s1:l3">ongeval</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Zonder u ben ik <rhyme label="a" type="f">ellendig</rhyme>.</l>
        <l id="s2:l2" met="4" type="+-">Want mijn quaal verteert me <rhyme label="a" type="f" corresp="#s2:l1">inwendig</rhyme>.</l>
        <l id="s2:l3" met="4" type="+-">Help my Heere, sta me <rhyme label="b" type="m">by</rhyme>!</l>
        <l id="s2:l4" met="4" type="+-">Hoor mijn bede ik leg in <rhyme label="b" type="m" corresp="#s2:l3">ly</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">'K heb mijn hope op uw <rhyme label="a" type="f">genade</rhyme>.</l>
        <l id="s3:l2" met="4" type="+-">Zoo ik wankele ten <rhyme label="a" type="f" corresp="#s3:l1">kwade</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Lagt mijn vyand om mijn <rhyme label="b" type="m">leed</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Als ge, ô Heiland! my <rhyme label="b" type="m" corresp="#s3:l3">vergeet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Laat hem des niet <rhyme label="a" type="f">triomfeeren</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Nog mijn ziel uw hulp <rhyme label="a" type="f" corresp="#s4:l1">ontbeeren</rhyme>!</l>
        <l id="s4:l3" met="4" type="+-">Toon, ô Heer! zijn wrok ten <rhyme label="b" type="m">spijt</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Dat ge mijn verlosser <rhyme label="b" type="m" corresp="#s4:l3">zijt</rhyme>!</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Op die hulp, van u <rhyme label="a" type="f">ontfangen</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Zal mijn zugt zijn en <rhyme label="a" type="f" corresp="#s5:l1">verlangen</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Waar my 't hemels ligt <rhyme label="b" type="m">beschijn</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">U te loven vry van <rhyme label="b" type="m" corresp="#s5:l3">pijn</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">'K voel, gelijk verniewt van <rhyme label="a" type="f">leven</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Mijne ziel daar toe <rhyme label="a" type="f" corresp="#s6:l1">gedreven</rhyme>.</l>
        <l id="s6:l3" met="4" type="+-">'K hebbe, tot mijn zingens <rhyme label="b" type="m">stof</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Reeds verkoren uwen <rhyme label="b" type="m" corresp="#s6:l3">lof</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

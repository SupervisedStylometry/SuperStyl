  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Hollant <rhyme label="a" type="m">onversaecht</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Ghy leeft nu wel in <rhyme label="b" type="f">vreden</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Nu dat ghy hebt <rhyme label="a" type="m" corresp="#s1:l1">veriaecht</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Die u wouden <rhyme label="b" type="f" corresp="#s1:l2">vertreden</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Met haer <rhyme label="b" type="f" corresp="#s1:l2">tirannich-heden</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Waren vermoet // te storten <rhyme label="c" type="m">bloet</rhyme></l>
        <l id="s1:l7" met="5" type="-+">Maer Godt die heeft v daer gans voor <rhyme label="c" type="m" corresp="#s1:l6">behoet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ghy worden oock <rhyme label="a" type="m">gheschat</rhyme></l>
        <l id="s2:l2" met="3" type="-+">En moesten thienden penninck <rhyme label="b" type="f">gheuen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Eer dat ghy orloch <rhyme label="a" type="m" corresp="#s2:l1">hadt</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Daer Duckdalf af moest <rhyme label="b" type="f" corresp="#s2:l2">leuen</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">En die zijn nu <rhyme label="b" type="f" corresp="#s2:l2">verdreuen</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Dat Spaens ghewelt // die om het <rhyme label="c" type="m">ghelt</rhyme></l>
        <l id="s2:l7" met="5" type="-+">V al dees langhe tijt hebben <rhyme label="c" type="m" corresp="#s2:l6">ghequelt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Die <rhyme label="a" type="m">ongherechticheyt</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Die is nu wt de <rhyme label="b" type="f">landen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">En al v <rhyme label="a" type="m" corresp="#s3:l1">majesteyt</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Die coemt v weer ter <rhyme label="b" type="f" corresp="#s3:l2">handen</rhyme></l>
        <l id="s3:l5" met="3" type="-+">V ghelt v goet v <rhyme label="b" type="f" corresp="#s3:l2">panden</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Dat op dat pas // vermindert <rhyme label="c" type="m">was</rhyme></l>
        <l id="s3:l7" met="5" type="-+">Dat sal v van Godt weer toe vloeyen <rhyme label="c" type="m" corresp="#s3:l6">ras</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Al die <rhyme label="a" type="m">afgodery</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Hebt ghy nu wech <rhyme label="b" type="f">ghecreghen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Nu mach elck leuen <rhyme label="a" type="m" corresp="#s4:l1">vry</rhyme></l>
        <l id="s4:l4" met="3" type="-+">En wandelen in Godts <rhyme label="b" type="f" corresp="#s4:l2">weghen</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Dat wel eer moest zijn <rhyme label="b" type="f" corresp="#s4:l2">versweghen</rhyme></l>
        <l id="s4:l6" met="4" type="-+">En bleef versmoort // dat comt nu <rhyme label="c" type="m">voort</rhyme></l>
        <l id="s4:l7" met="5" type="-+">Het welck is die waerheyt <rhyme label="c" type="m" corresp="#s4:l6">onghestoort</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">O Princelijcke <rhyme label="a" type="m">macht</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Die ons heeft gaen <rhyme label="b" type="f">bewaren</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">En benomen haer <rhyme label="a" type="m" corresp="#s5:l1">cracht</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Die ons ghinghen <rhyme label="b" type="f" corresp="#s5:l2">beswaren</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Lof, O Heer der <rhyme label="b" type="f" corresp="#s5:l2">Heerscharen</rhyme></l>
        <l id="s5:l6" met="4" type="-+">Die ons in vreen // hout al <rhyme label="c" type="m">ghemeen</rhyme></l>
        <l id="s5:l7" met="5" type="-+">Dorpen, Sloten ende daer toe <rhyme label="c" type="m" corresp="#s5:l6">Steen</rhyme>.</l>
      </lg>
    </lg>
  </text>

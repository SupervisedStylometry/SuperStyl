    <melody>Hoor toe gij christenen subiet</melody>
    <categories>
      <category translation="formal genres">formele genres</category>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Hoort toe ghy Christenen <rhyme label="a" type="m">subijt</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Hoe Lijf en Siele tsamen <rhyme label="a" type="m" corresp="#s1:l1">strijt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Alleen op deser <rhyme label="b" type="f">Eerden</rhyme>:</l>
        <l id="s1:l4" met="4" type="-+">Desen camp gheduert <rhyme label="a" type="m" corresp="#s1:l1">altijt</rhyme>:</l>
        <l id="s1:l5" met="3" type="-+">Den Gheest moet tvleesch <rhyme label="b" type="f" corresp="#s1:l3">aenueerden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Dat Vleesch dat spreeckt, ick ben <rhyme label="a" type="m">gesont</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">En hebbe noch menighen goeden <rhyme label="a" type="m" corresp="#s2:l1">stont</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Eer my die doot doet <rhyme label="b" type="f">beuen</rhyme>:</l>
        <l id="s2:l4" met="4" type="-+">Daerom wil ick van herten <rhyme label="a" type="m" corresp="#s2:l1">gront</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">In allen wellust <rhyme label="b" type="f" corresp="#s2:l3">leuen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Die Siele seyt, dit radick <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Maer vreest Gods strenghe oordeel <rhyme label="a" type="m" corresp="#s3:l1">siet</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">In den Doop zijt ghy <rhyme label="b" type="f">verbonden</rhyme>:</l>
        <l id="s3:l4" met="4" type="-+">Te laeten al wat u Godt <rhyme label="a" type="m" corresp="#s3:l1">verbiet</rhyme></l>
        <l id="s3:l5" met="3" type="-+">En zijn woort te <rhyme label="b" type="f" corresp="#s3:l3">vermonden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Dat Vleesch spreect, ick ben stout en <rhyme label="a" type="m">fijn</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Met goede Ghesellen, by coelen <rhyme label="a" type="m" corresp="#s4:l1">Wijn</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Daer wil ick zijn met <rhyme label="b" type="f">vruechden</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Singhen, springhen, op dit <rhyme label="a" type="m" corresp="#s4:l1">termijn</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Tis noch te vroech tot <rhyme label="b" type="f" corresp="#s4:l3">duechden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Die Siele spreect, denck op den rijcken <rhyme label="a" type="m">man</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Die hem nam tijdelijck lusten <rhyme label="a" type="m" corresp="#s5:l1">an</rhyme>:</l>
        <l id="s5:l3" met="3" type="-+">Lijf en Siele moesten <rhyme label="b" type="f">strijcken</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Int helsch verdriet, en duyuels <rhyme label="a" type="m" corresp="#s5:l1">ban</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Soo Christus claer doet <rhyme label="b" type="f" corresp="#s5:l3">blijcken</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Dat vleesch spreect, wat acht ic <rhyme label="a" type="m">tgeclach</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Ick hebbe voor my noch menighen <rhyme label="a" type="m" corresp="#s6:l1">dach</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Daerin ick mach <rhyme label="b" type="f">bekeeren</rhyme>:</l>
        <l id="s6:l4" met="4" type="-+">Mijn sonden beweenen, en segghen <rhyme label="a" type="m" corresp="#s6:l1">ach</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Als mijn droefheyt sal <rhyme label="b" type="f" corresp="#s6:l3">meeren</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Die Siele spreeckt, ghy hebt geen <rhyme label="a" type="m">gewelt</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Jonck en out wort haest <rhyme label="a" type="m" corresp="#s7:l1">versnelt</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Ghy en hebt gheenen <rhyme label="b" type="f">morghen</rhyme>:</l>
        <l id="s7:l4" met="4" type="-+">In een ooghenblick zijt ghy neder <rhyme label="a" type="m" corresp="#s7:l1">gheuelt</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Ten sy dat Godt wil <rhyme label="b" type="f" corresp="#s7:l3">borghen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Dat Vleesch spreect, het sy vroech of <rhyme label="a" type="m">laet</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Ick wil hier volghen sweerelts <rhyme label="a" type="m" corresp="#s8:l1">staet</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Die soeckt al haer <rhyme label="b" type="f">wellusten</rhyme>:</l>
        <l id="s8:l4" met="4" type="-+">Daerin wil ick leeren haren <rhyme label="a" type="m" corresp="#s8:l1">raet</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">En leuen vry met <rhyme label="b" type="f" corresp="#s8:l3">rusten</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Die Siele spreeckt, nu compt den <rhyme label="a" type="m">tijt</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Dat Lijf en Siele scheyden <rhyme label="a" type="m" corresp="#s9:l1">subijt</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Wat macht u dan al <rhyme label="b" type="f">baten</rhyme>?</l>
        <l id="s9:l4" met="4" type="-+">Denckt dat ghy in asschen verkeerende <rhyme label="a" type="m" corresp="#s9:l1">zijt</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Ghy moet die werelt <rhyme label="b" type="f" corresp="#s9:l3">laten</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Dat Vleesch dat spreect, ghi maect my <rhyme label="a" type="m">bang</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Nae deewighe vruecht ick nu <rhyme label="a" type="m" corresp="#s10:l1">verlang</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">O Christe wilt my <rhyme label="b" type="f">helpen</rhyme>:</l>
        <l id="s10:l4" met="4" type="-+">Dat ick tot den Vader hebbe <rhyme label="a" type="m" corresp="#s10:l1">ingang</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Op dat mijn trueren mach <rhyme label="b" type="f" corresp="#s10:l3">stelpen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Die Siele spreeckt, ten is gheen <rhyme label="a" type="m">spot</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Een ghebroken herte vordert <rhyme label="a" type="m" corresp="#s11:l1">Godt</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Dat vleesch moet hier <rhyme label="b" type="f">versteruen</rhyme>:</l>
        <l id="s11:l4" met="4" type="-+">Want tis gheuallen int tijdelijck <rhyme label="a" type="m" corresp="#s11:l1">lot</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">En in der wormen <rhyme label="b" type="f" corresp="#s11:l3">verderuen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Dat Vleesch dat spreect, o God mijn <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Helpt dat ick my door Christum <rhyme label="a" type="m" corresp="#s12:l1">bekeer</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">En mijn Ghelooue <rhyme label="b" type="f">verstercke</rhyme>:</l>
        <l id="s12:l4" met="4" type="-+">Laet my hier lijden ter weerelt <rhyme label="a" type="m" corresp="#s12:l1">meer</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">Op dat ick u vruecht <rhyme label="b" type="f" corresp="#s12:l3">aenmercke</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Die Siele spreeckt, nu heb ick <rhyme label="a" type="m">recht</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Al ben ick toch een onnut <rhyme label="a" type="m" corresp="#s13:l1">knecht</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">O Godt rechtuaerdich <rhyme label="b" type="f">alleyne</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Beurijt my van des duyuels <rhyme label="a" type="m" corresp="#s13:l1">gheuecht</rhyme>,</l>
        <l id="s13:l5" met="3" type="-+">Door Christi lijden <rhyme label="b" type="f" corresp="#s13:l3">reyne</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Also maeck ick mijns Liedekens <rhyme label="a" type="m">ent</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">En bidde dat Godt elcx herte <rhyme label="a" type="m" corresp="#s14:l1">omwent</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Tot Christum synen <rhyme label="b" type="f">Soone</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">En dat hy verlichte dat vleesch <rhyme label="a" type="m" corresp="#s14:l1">verblent</rhyme>,</l>
        <l id="s14:l5" met="3" type="-+">Met synen woorde <rhyme label="b" type="f" corresp="#s14:l3">schoone</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Gy die u tedere <rhyme label="a" type="f">sinnen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Hebt op de min <rhyme label="b" type="m">gesteld</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">En voeld   uw hert <rhyme label="a" type="f" corresp="#s1:l1">verwinnen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Door haar gevreesd <rhyme label="b" type="m" corresp="#s1:l2">geweld</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">En vreesd <rhyme label="c" type="m">niet</rhyme></l>
        <l id="s1:l6" met="2" type="+-">Voor <rhyme label="c" type="m" corresp="#s1:l5">verdriet</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Nog felle <rhyme label="d" type="f">minnesmerten</rhyme></l>
        <l id="s1:l8" met="3" type="+-">Nu Kupido <rhyme label="e" type="m">swigt</rhyme></l>
        <l id="s1:l9" met="3" type="+-">Voor sijn eygen <rhyme label="e" type="m" corresp="#s1:l8">schigt</rhyme></l>
        <l id="s1:l10" met="3" type="-+">En om het stervelijk <rhyme label="f" type="m">schoon</rhyme></l>
        <l id="s1:l11" met="2" type="+-">Van uw <rhyme label="f" type="m" corresp="#s1:l10">Persoon</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">De kragt der stralende <rhyme label="a" type="f">lonken</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Van Psiches schoon <rhyme label="b" type="m">gesigt</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Doen sijne ziel <rhyme label="a" type="f" corresp="#s2:l1">ontfonken</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Aan hare min <rhyme label="b" type="m" corresp="#s2:l2">verpligt</rhyme>.</l>
        <l id="s2:l5" met="2" type="-+">Haar schoonheid <rhyme label="c" type="m">voed</rhyme></l>
        <l id="s2:l6" met="2" type="+-">Sijne <rhyme label="c" type="m" corresp="#s2:l5">gloed</rhyme></l>
        <l id="s2:l7" met="3" type="-+">En doet sijn trotsheid <rhyme label="d" type="f">wijken</rhyme>;</l>
        <l id="s2:l8" met="3" type="+-">Des volgd hy zijn <rhyme label="e" type="m">lust</rhyme></l>
        <l id="s2:l9" met="3" type="+-">En soekt sijne <rhyme label="e" type="m" corresp="#s2:l8">rust</rhyme></l>
        <l id="s2:l10" met="3" type="-+">- Trots Venus wreede <rhyme label="f" type="m">gebod</rhyme> -</l>
        <l id="s2:l11" met="2" type="+-">In haar <rhyme label="f" type="m" corresp="#s2:l10">genot</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Dus moet hy selve <rhyme label="a" type="f">verdragen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">En lijden in sijn <rhyme label="b" type="m">hert</rhyme></l>
        <l id="s3:l3" met="3" type="-+">De pijnlijke <rhyme label="a" type="f" corresp="#s3:l1">plagen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Die steeds de minnaars <rhyme label="b" type="m" corresp="#s3:l2">smert</rhyme>.</l>
        <l id="s3:l5" met="2" type="-+">Hoe fel de <rhyme label="c" type="m">nyt</rhyme></l>
        <l id="s3:l6" met="2" type="+-">Haar <rhyme label="c" type="m" corresp="#s3:l5">bevryd</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Wie kan dan voortaan niet <rhyme label="d" type="f">hopen</rhyme></l>
        <l id="s3:l8" met="3" type="+-">Dat hy   van die <rhyme label="e" type="m">pijn</rhyme></l>
        <l id="s3:l9" met="3" type="+-">Gevoelig sal <rhyme label="e" type="m" corresp="#s3:l8">zijn</rhyme></l>
        <l id="s3:l10" met="3" type="-+">En strelen met lust en <rhyme label="f" type="m">vreugd</rhyme></l>
        <l id="s3:l11" met="2" type="+-">De minnende <rhyme label="f" type="m" corresp="#s3:l10">jeugd</rhyme>.</l>
      </lg>
    </lg>
  </text>

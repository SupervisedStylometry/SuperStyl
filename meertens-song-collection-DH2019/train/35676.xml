    <melody>Schoon lief wil mij troost geven</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Albertus Buitendyck</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">AGniet, spiegel der <rhyme label="a" type="f">Maeghden</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Die Godt altijt <rhyme label="a" type="f" corresp="#s1:l1">behaeghden</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Tot Romen is <rhyme label="b" type="m">gebaert</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Uyt Ouders rijck van <rhyme label="c" type="f">hoven</rhyme>;</l>
        <l id="s1:l5" met="3" type="-+">Voorstaenders van 't <rhyme label="c" type="f" corresp="#s1:l4">geloven</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Door d'Edle stam <rhyme label="b" type="m" corresp="#s1:l3">vermaert</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Haer jeught en jonge <rhyme label="a" type="f">tijde</rhyme></l>
        <l id="s2:l2" met="3" type="-+">In Christus doodt en <rhyme label="a" type="f" corresp="#s2:l1">lijden</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">En deughden heeft <rhyme label="b" type="m">besteedt</rhyme>.</l>
        <l id="s2:l4" met="3" type="-+">Haer Maeghdom Godt <rhyme label="c" type="f">ver-eerde</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Deughden daegh'lijcx <rhyme label="c" type="f" corresp="#s2:l4">vermeerde</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Al 's werelts pracht <rhyme label="b" type="m" corresp="#s2:l3">vertreedt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Een Jonghman <rhyme label="a" type="f">uytermaten</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Rijck, en Edel van <rhyme label="a" type="f" corresp="#s3:l1">staten</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Agniet om trouwe <rhyme label="b" type="m">socht</rhyme>.</l>
        <l id="s3:l4" met="3" type="-+">Met woorden, en <rhyme label="c" type="f">juweelen</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Haer zinnen socht te <rhyme label="c" type="f" corresp="#s3:l4">steelen</rhyme>;</l>
        <l id="s3:l6" met="3" type="-+">Een ydel werckje <rhyme label="b" type="m" corresp="#s3:l3">wrocht</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Sy sprack: Gaet wegh <rhyme label="a" type="f">terstonde</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Van my, voedsel der <rhyme label="a" type="f" corresp="#s4:l1">sonde</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Wegh, wegh ghy helsche <rhyme label="b" type="m">brandt</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Gaet van hier spijs der <rhyme label="c" type="f">dooden</rhyme>;</l>
        <l id="s4:l5" met="3" type="-+">U beloften u <rhyme label="c" type="f" corresp="#s4:l4">nooden</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">'k Verfoey met vol <rhyme label="b" type="m" corresp="#s4:l3">verstandt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Mijn Bruydegom <rhyme label="a" type="f">verkoore</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Uyt een Maeght is <rhyme label="a" type="f" corresp="#s5:l1">geboore</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Zijn Vader kent geen <rhyme label="b" type="m">Vrouw</rhyme>;</l>
        <l id="s5:l4" met="3" type="-+">Is edel, schoon, rijck, <rhyme label="c" type="f">krachtigh</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Wijs; Zoon van Godt <rhyme label="c" type="f" corresp="#s5:l4">Almachtigh</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">De'es schoonste heeft mijn <rhyme label="b" type="m" corresp="#s5:l3">trouw</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Al d'Engelen hem <rhyme label="a" type="f">dienen</rhyme>.</l>
        <l id="s6:l2" met="3" type="-+">Tot my de <rhyme label="a" type="f" corresp="#s6:l1">Seraphienen</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Gestuert heeft 's Hemels <rhyme label="b" type="m">goedt</rhyme>.</l>
        <l id="s6:l4" met="3" type="-+">Zijn trouw heb ick <rhyme label="c" type="f">ontfangen</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Getekent heeft mijn <rhyme label="c" type="f" corresp="#s6:l4">wangen</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Met sijn onnoozel <rhyme label="b" type="m" corresp="#s6:l3">bloedt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Noyt, zal ick hem <rhyme label="a" type="f">verlaten</rhyme></l>
        <l id="s7:l2" met="3" type="-+">'k Acht u goedt, staet en <rhyme label="a" type="f" corresp="#s7:l1">praten</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Als Doorens, Kaf en <rhyme label="b" type="m">Stanck</rhyme>.</l>
        <l id="s7:l4" met="3" type="-+">Dat hy zoo wordt <rhyme label="c" type="f">verstoote</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Dat heeft hem zoo <rhyme label="c" type="f" corresp="#s7:l4">verdroote</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Wordt hierom suf en <rhyme label="b" type="m" corresp="#s7:l3">kranck</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Als zijn Vader 't <rhyme label="a" type="f">verstonde</rhyme>:</l>
        <l id="s8:l2" met="3" type="-+">Haer nae de Rechter <rhyme label="a" type="f" corresp="#s8:l1">sonde</rhyme>;</l>
        <l id="s8:l3" met="3" type="-+">Die haer voor oogen <rhyme label="b" type="m">houdt</rhyme>:</l>
        <l id="s8:l4" met="3" type="-+">Zoo ghy niet eert <rhyme label="c" type="f">d'Afgode</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Ick sal u late <rhyme label="c" type="f" corresp="#s8:l4">doode</rhyme>;</l>
        <l id="s8:l6" met="3" type="-+">Of trouwt dees rijcke <rhyme label="b" type="m" corresp="#s8:l3">heldt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Doodt, noch mensch haer doet <rhyme label="a" type="f">vreeze</rhyme>.</l>
        <l id="s9:l2" met="3" type="-+">Naeckt en bloodt wordt <rhyme label="a" type="f" corresp="#s9:l1">verweeze</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Na een bordeel te <rhyme label="b" type="m">gaen</rhyme>.</l>
        <l id="s9:l4" met="3" type="-+">Christus bedeckt haer <rhyme label="c" type="f">leden</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Met hayr, en 's Hemels <rhyme label="c" type="f" corresp="#s9:l4">kleden</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Die d'Engel haer brocht <rhyme label="b" type="m" corresp="#s9:l3">aen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">De Vryer hier <rhyme label="a" type="f">t'onteeren</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Socht, Agniet, Bruydt des <rhyme label="a" type="f" corresp="#s10:l1">Heeren</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Tegens Goods wil en <rhyme label="b" type="m">Wet</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Van d' Engel is <rhyme label="c" type="f">geslagen</rhyme>;</l>
        <l id="s10:l5" met="3" type="-+">Al weenen, die 't Lijck <rhyme label="c" type="f" corresp="#s10:l4">sagen</rhyme>.</l>
        <l id="s10:l6" met="3" type="-+">Verrijst door haer <rhyme label="b" type="m" corresp="#s10:l3">gebedt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">De booze en de <rhyme label="a" type="f">quaden</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Roepen: Rechter wilt <rhyme label="a" type="f" corresp="#s11:l1">braden</rhyme></l>
        <l id="s11:l3" met="3" type="-+">Dees Tooveners met 't <rhyme label="b" type="m">vyer</rhyme>.</l>
        <l id="s11:l4" met="3" type="-+">Dit vyer verslindt veel <rhyme label="c" type="f">boozen</rhyme>.</l>
        <l id="s11:l5" met="3" type="-+">Zy wandelt als op <rhyme label="c" type="f" corresp="#s11:l4">roozen</rhyme></l>
        <l id="s11:l6" met="3" type="-+">Vol troost met groot <rhyme label="b" type="m" corresp="#s11:l3">playsier</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">'t Vyer verliest al zijn <rhyme label="a" type="f">krachten</rhyme>.</l>
        <l id="s12:l2" met="3" type="-+">De Beul met volle <rhyme label="a" type="f" corresp="#s12:l1">machten</rhyme></l>
        <l id="s12:l3" met="3" type="-+">Door d' Hals van Agnes, 't <rhyme label="b" type="m">Lam</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Steeckt, boort sijn scherpe <rhyme label="c" type="f">degen</rhyme>.</l>
        <l id="s12:l5" met="3" type="-+">Twee kroonen door Goods <rhyme label="c" type="f" corresp="#s12:l4">zegen</rhyme></l>
        <l id="s12:l6" met="3" type="-+">In 's Hemels vreught <rhyme label="b" type="m" corresp="#s12:l3">bequam</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Agniet, oudt derthien <rhyme label="a" type="f">Iaren</rhyme></l>
        <l id="s13:l2" met="3" type="-+">Leert hoe ghy zult <rhyme label="a" type="f" corresp="#s13:l1">bewaren</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Maeght! Uwe <rhyme label="b" type="m">Maeghde-blom</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Betreedt haer deughde <rhyme label="c" type="f">paden</rhyme>.</l>
        <l id="s13:l5" met="3" type="-+">Leeft na Goods wil en <rhyme label="c" type="f" corresp="#s13:l4">raden</rhyme>,</l>
        <l id="s13:l6" met="3" type="-+">Dient trouw uw' <rhyme label="b" type="m" corresp="#s13:l3">Bruydegom</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Agniet, door uw' <rhyme label="a" type="f">ghebeden</rhyme></l>
        <l id="s14:l2" met="3" type="-+">Krijght dat ick ziel, en <rhyme label="a" type="f" corresp="#s14:l1">leden</rhyme></l>
        <l id="s14:l3" met="3" type="-+">Gebruyck tot Godes <rhyme label="b" type="m">lof</rhyme>:</l>
        <l id="s14:l4" met="3" type="-+">Dat ziel en vleesch kan <rhyme label="c" type="f">smette</rhyme>,</l>
        <l id="s14:l5" met="3" type="-+">Wilt dat van mijn <rhyme label="c" type="f" corresp="#s14:l4">belette</rhyme>.</l>
        <l id="s14:l6" met="3" type="-+">Krijght mijn ziel 's Hemels <rhyme label="b" type="m" corresp="#s14:l3">hof</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

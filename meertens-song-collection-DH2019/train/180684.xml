  <author>Philippus van Sorgen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Myn waerde ziel hoe dus <rhyme label="a" type="m">ongestelt</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Wilt doch niet langer blijven <rhyme label="b" type="f">treuren</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Dien sonden-last die u nu <rhyme label="a" type="m" corresp="#s1:l1">quelt</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Sal immers Iesus van u <rhyme label="b" type="f" corresp="#s1:l2">scheuren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Al zijn u eygen krachten <rhyme label="a" type="m">swack</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Wilt uwen noot aen Iesum <rhyme label="b" type="f">klagen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Beswijckt ghy onder ‘t sonden <rhyme label="a" type="m" corresp="#s2:l1">pack</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Vertrout op hem, hy sal het <rhyme label="b" type="f" corresp="#s2:l2">dragen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Hy noodight u nu aen sijn <rhyme label="a" type="m">Dis</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Waerom dan soo een rou <rhyme label="b" type="f">bedreven</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Steunt maer op hem, hy sal <rhyme label="a" type="m" corresp="#s3:l1">gewis</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">U oock wel voorder krachten <rhyme label="b" type="f" corresp="#s3:l2">geven</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Met recht mijn ziel zijt ghy <rhyme label="a" type="m">bevreest</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Tot dese Heyligheyt te <rhyme label="b" type="f">naken</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Laet vry u sonden, minst en <rhyme label="a" type="m" corresp="#s4:l1">meest</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">U droevigh en bekommert <rhyme label="b" type="f" corresp="#s4:l2">maken</rhyme>,</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Maer laet geen droefheyt meester <rhyme label="a" type="m">zijn</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Went u tot Godts <rhyme label="b" type="f">barmhertigheden</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Wat seght der zielen <rhyme label="a" type="m" corresp="#s5:l1">medecijn</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Hoort doch sijn woort en soete <rhyme label="b" type="f" corresp="#s5:l2">reden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Hy roeptse niet die zijn <rhyme label="a" type="m">gesont</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Maer wil een siecken herder <rhyme label="b" type="f">wesen</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Heeft u de sonde dan <rhyme label="a" type="m" corresp="#s6:l1">gewont</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Dien Iesus sal u weer <rhyme label="b" type="f" corresp="#s6:l2">genesen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">O Iesus ’s herten-troost en <rhyme label="a" type="m">vreught</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Noodt ghy de zielen vol <rhyme label="b" type="f">gebreken</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Op dat ghy soo de siecken <rhyme label="a" type="m" corresp="#s7:l1">meught</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Door u bloet wassen en <rhyme label="b" type="f" corresp="#s7:l2">opqueken</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Al is mijn ziel dan seer <rhyme label="a" type="m">bemorst</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Noch wil ick evenwel niet <rhyme label="b" type="f">schromen</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Tot u ô! lieve <rhyme label="a" type="m" corresp="#s8:l1">Vrede-vorst</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Tot u, mijn Heylant, toe te <rhyme label="b" type="f" corresp="#s8:l2">komen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Ghy hebt, ô Heer, u liefd’ en <rhyme label="a" type="m">kracht</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">In u vernederingh <rhyme label="b" type="f">bewesen</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Als yeder, die men tot u <rhyme label="a" type="m" corresp="#s9:l1">bracht</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Door uwe handen wierd’ <rhyme label="b" type="f" corresp="#s9:l2">genesen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Wilt oock alsoo mijn siecke <rhyme label="a" type="m">ziel</rhyme>.</l>
        <l id="s10:l2" met="4" type="-+">Met allerley ellend’ <rhyme label="b" type="f">beladen</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Op trecken uyt dien <rhyme label="a" type="m" corresp="#s10:l1">modder-wiel</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">En in u bloet, ô Iesu, <rhyme label="b" type="f" corresp="#s10:l2">baden</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">O Iesu, Christi, Davids <rhyme label="a" type="m">Soon</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Ick soo een arme blint <rhyme label="b" type="f">geboren</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Buygh my voor u <rhyme label="a" type="m" corresp="#s11:l1">genaden-troon</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Laet mijn u stem, wort siende, <rhyme label="b" type="f" corresp="#s11:l2">hooren</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Tot ‘t goede ben ick doof en <rhyme label="a" type="m">stom</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Ach! wilt u over my <rhyme label="b" type="f">ontfermen</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Mijn hert is kout, ô Iesu! <rhyme label="a" type="m" corresp="#s12:l1">kom</rhyme></l>
        <l id="s12:l4" met="4" type="-+">Wilt my door uwen Geest <rhyme label="b" type="f" corresp="#s12:l2">verwermen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Ick ben oock kreupel, swack en <rhyme label="a" type="m">lam</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Om yets tot uwer eer te <rhyme label="b" type="f">wercken</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Och! of u kracht van boven <rhyme label="a" type="m" corresp="#s13:l1">quam</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Om mijne swackheyt te <rhyme label="b" type="f" corresp="#s13:l2">verstercken</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Was ick alleen maer krank en <rhyme label="a" type="m">swack</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">Maer vrees’ dat ick ben doot in <rhyme label="b" type="f">sonden</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Doch Iesus, die ‘s doods prickel <rhyme label="a" type="m" corresp="#s14:l1">brack</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">Mijn Heylant, heelt oock sulcke <rhyme label="b" type="f" corresp="#s14:l2">wonden</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Doe Lazarus begraven <rhyme label="a" type="m">lagh</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">Quaemt ghy hem Iesum weer <rhyme label="b" type="f">verwecken</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">Wilt oock alsoo mijn ziele <rhyme label="a" type="m" corresp="#s15:l1">ach</rhyme>!</l>
        <l id="s15:l4" met="4" type="-+">Nu nuyt het graft der sonden <rhyme label="b" type="f" corresp="#s15:l2">trecken</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Oock was de gantsche werelt <rhyme label="a" type="m">doot</rhyme>,</l>
        <l id="s16:l2" met="4" type="-+">Eer ghy haer quaemt in liefd’ <rhyme label="b" type="f">aenschouwen</rhyme>,</l>
        <l id="s16:l3" met="4" type="-+">Sou dan mijn ziel in desen <rhyme label="a" type="m" corresp="#s16:l1">noot</rhyme>,</l>
        <l id="s16:l4" met="4" type="-+">Op u mijn Heylant, niet <rhyme label="b" type="f" corresp="#s16:l2">vertrouwen</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Tot wien sou ick doch heenen <rhyme label="a" type="m">gaen</rhyme>,</l>
        <l id="s17:l2" met="4" type="-+">By u alleen, by u is ‘t <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s17:l3" met="4" type="-+">U soete Iesu kleef ick <rhyme label="a" type="m" corresp="#s17:l1">aen</rhyme>,</l>
        <l id="s17:l4" met="4" type="-+">Aen u wil ick my gantschelick <rhyme label="b" type="f" corresp="#s17:l2">geven</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Ick steun op u, o stercken <rhyme label="a" type="m">Heldt</rhyme>,</l>
        <l id="s18:l2" met="4" type="-+">Die Doot en Duyvel hebt <rhyme label="b" type="f">verwonnen</rhyme>,</l>
        <l id="s18:l3" met="4" type="-+">Ia al de Helsche macht <rhyme label="a" type="m" corresp="#s18:l1">geveldt</rhyme>,</l>
        <l id="s18:l4" met="4" type="-+">Ghy sult my doode ‘t leven <rhyme label="b" type="f" corresp="#s18:l2">jonnen</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">Ick ga dan na u <rhyme label="a" type="m">Vreugde-feest</rhyme>,</l>
        <l id="s19:l2" met="4" type="-+">Maer, ach! daer zijn noch felle <rhyme label="b" type="f">troepen</rhyme>,</l>
        <l id="s19:l3" met="4" type="-+">Die all’ haer krachten, <rhyme label="a" type="m" corresp="#s19:l1">onbevreest</rhyme></l>
        <l id="s19:l4" met="4" type="-+">Om my te stuyten, t’samen <rhyme label="b" type="f" corresp="#s19:l2">roepen</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">Mijn eygen vleesch, soo vol <rhyme label="a" type="m">bedrogh</rhyme>,</l>
        <l id="s20:l2" met="4" type="-+">Kom my aen alle zijden <rhyme label="b" type="f">quellen</rhyme></l>
        <l id="s20:l3" met="4" type="-+">Waer by sigh oock de werelt <rhyme label="a" type="m" corresp="#s20:l1">noch</rhyme></l>
        <l id="s20:l4" met="4" type="-+">Vervoeght met ‘t boos gedrocht der <rhyme label="b" type="f" corresp="#s20:l2">Hellen</rhyme>.</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="4" type="-+">Al is ‘t dat sy niet gansch mijn <rhyme label="a" type="m">hert</rhyme>.</l>
        <l id="s21:l2" met="4" type="-+">Van u, mijn Herder, konnen <rhyme label="b" type="f">trecken</rhyme>,</l>
        <l id="s21:l3" met="4" type="-+">Sy konnen echter sware <rhyme label="a" type="m" corresp="#s21:l1">smert</rhyme>,</l>
        <l id="s21:l4" met="4" type="-+">En ongeneught daer in <rhyme label="b" type="f" corresp="#s21:l2">verwecken</rhyme>.</l>
      </lg>
      <lg id="s22" type="stanza">
        <l id="s22:l1" met="4" type="-+">En weten door een loosen <rhyme label="a" type="m">schijn</rhyme>,</l>
        <l id="s22:l2" met="4" type="-+">Mijn sinnen seer in warr’ te <rhyme label="b" type="f">brengen</rhyme>,</l>
        <l id="s22:l3" met="4" type="-+">Om dan alsoo haer boos <rhyme label="a" type="m" corresp="#s22:l1">fenijn</rhyme>,</l>
        <l id="s22:l4" met="4" type="-+">Door all’ mijn leden te <rhyme label="b" type="f" corresp="#s22:l2">vermengen</rhyme>.</l>
      </lg>
      <lg id="s23" type="stanza">
        <l id="s23:l1" met="4" type="-+">O! trouwen Herder staet mijn <rhyme label="a" type="m">by</rhyme>,</l>
        <l id="s23:l2" met="4" type="-+">Ach wilt u over my <rhyme label="b" type="f">ontfermen</rhyme>,</l>
        <l id="s23:l3" met="4" type="-+">En voor die wreede wolven <rhyme label="a" type="m" corresp="#s23:l1">my</rhyme>,</l>
        <l id="s23:l4" met="4" type="-+">Door uwe stercke handt <rhyme label="b" type="f" corresp="#s23:l2">beschermen</rhyme>.</l>
      </lg>
      <lg id="s24" type="stanza">
        <l id="s24:l1" met="4" type="-+">Ick heb geen kracht, noch weer geen <rhyme label="a" type="m">raet</rhyme>,</l>
        <l id="s24:l2" met="4" type="-+">Hoe ick haer tegen-weer sou <rhyme label="b" type="f">bieden</rhyme>,</l>
        <l id="s24:l3" met="4" type="-+">Ghy zijt mijn troost, mijn <rhyme label="a" type="m" corresp="#s24:l1">toeverlaet</rhyme>,</l>
        <l id="s24:l4" met="4" type="-+">In uwe armen kom ick <rhyme label="b" type="f" corresp="#s24:l2">vlieden</rhyme>.</l>
      </lg>
      <lg id="s25" type="stanza">
        <l id="s25:l1" met="4" type="-+">Mijn kracht is niet als ydel <rhyme label="a" type="m">kaf</rhyme>,</l>
        <l id="s25:l2" met="4" type="-+">Een riet, waer op men niet kan <rhyme label="b" type="f">steunen</rhyme>,</l>
        <l id="s25:l3" met="4" type="-+">Ghy zijt mijn stercken stock en <rhyme label="a" type="m" corresp="#s25:l1">staf</rhyme>,</l>
        <l id="s25:l4" met="4" type="-+">Op u mijn Heylant, wil ick <rhyme label="b" type="f" corresp="#s25:l2">leunen</rhyme>.</l>
      </lg>
      <lg id="s26" type="stanza">
        <l id="s26:l1" met="4" type="-+">O! Iesu, het gekrookte <rhyme label="a" type="m">riet</rhyme>,</l>
        <l id="s26:l2" met="4" type="-+">Wilt ghy doch immers niet <rhyme label="b" type="f">verbreken</rhyme>,</l>
        <l id="s26:l3" met="4" type="-+">Het roockend’ lemmet sult ghy <rhyme label="a" type="m" corresp="#s26:l1">niet</rhyme></l>
        <l id="s26:l4" met="4" type="-+">Uyt blussen, maer veel meer <rhyme label="b" type="f" corresp="#s26:l2">ontsteken</rhyme>.</l>
      </lg>
      <lg id="s27" type="stanza">
        <l id="s27:l1" met="4" type="-+">Mijn ’s herten lamp is sonder <rhyme label="a" type="m">vlam</rhyme>,</l>
        <l id="s27:l2" met="4" type="-+">Wilt doch dien oly, daer in <rhyme label="b" type="f">gieten</rhyme>,</l>
        <l id="s27:l3" met="4" type="-+">Die, uyt u eygen herte, <rhyme label="a" type="m" corresp="#s27:l1">quam</rhyme></l>
        <l id="s27:l4" met="4" type="-+">Van ‘t Hout des Kruyses tot ons <rhyme label="b" type="f" corresp="#s27:l2">vlieten</rhyme>,</l>
      </lg>
      <lg id="s28" type="stanza">
        <l id="s28:l1" met="4" type="-+">O! eeuwigh Licht, ô! klare <rhyme label="a" type="m">Son</rhyme>,</l>
        <l id="s28:l2" met="4" type="-+">Wilt doch mijn herte nu <rhyme label="b" type="f">bestralen</rhyme>,</l>
        <l id="s28:l3" met="4" type="-+">Laet uwe stromen, <rhyme label="a" type="m" corresp="#s28:l1">vreughde-bron</rhyme>.</l>
        <l id="s28:l4" met="4" type="-+">Doch binnen in mijn ziele <rhyme label="b" type="f" corresp="#s28:l2">dalen</rhyme>.</l>
      </lg>
      <lg id="s29" type="stanza">
        <l id="s29:l1" met="4" type="-+">Ick armen worm kom dan, met <rhyme label="a" type="m">u</rhyme>,</l>
        <l id="s29:l2" met="4" type="-+">Tot u, ô! soete Iesu, <rhyme label="b" type="f">kruypen</rhyme>,</l>
        <l id="s29:l3" met="4" type="-+">En neven ’s vyants leger <rhyme label="a" type="m" corresp="#s29:l1">nu</rhyme>,</l>
        <l id="s29:l4" met="4" type="-+">Aen uwe Liefde-tafel <rhyme label="b" type="f" corresp="#s29:l2">sluypen</rhyme>.</l>
      </lg>
      <lg id="s30" type="stanza">
        <l id="s30:l1" met="4" type="-+">Mijnen trouwen Heylant, laet my <rhyme label="a" type="m">ach</rhyme>!</l>
        <l id="s30:l2" met="4" type="-+">Maer onder uwe tafel <rhyme label="b" type="f">wesen</rhyme>,</l>
        <l id="s30:l3" met="4" type="-+">Op dat ick daer de brockjes <rhyme label="a" type="m" corresp="#s30:l1">mach</rhyme>,</l>
        <l id="s30:l4" met="4" type="-+">Gelijck de hondekens, <rhyme label="b" type="f" corresp="#s30:l2">oplesen</rhyme>.</l>
      </lg>
      <lg id="s31" type="stanza">
        <l id="s31:l1" met="4" type="-+">Ick gae dan heen, mijn Heylandt, <rhyme label="a" type="m">kom</rhyme></l>
        <l id="s31:l2" met="4" type="-+">Wilt my met uwe vlercken <rhyme label="b" type="f">decken</rhyme>,</l>
        <l id="s31:l3" met="4" type="-+">Ick gae, maer wilt mijn <rhyme label="a" type="m" corresp="#s31:l1">Bruydegom</rhyme>,</l>
        <l id="s31:l4" met="4" type="-+">Met uwe liefde-koorden <rhyme label="b" type="f" corresp="#s31:l2">trecken</rhyme>.</l>
      </lg>
      <lg id="s32" type="stanza">
        <l id="s32:l1" met="4" type="-+">O! Iesu, grijpt my by de <rhyme label="a" type="m">handt</rhyme>,</l>
        <l id="s32:l2" met="4" type="-+">Set doch mijn herte graetigh <rhyme label="b" type="f">open</rhyme>,</l>
        <l id="s32:l3" met="4" type="-+">Op dat soo, sonder <rhyme label="a" type="m" corresp="#s32:l1">tegenstandt_</rhyme></l>
        <l id="s32:l4" met="4" type="-+">U balssem in mijn ziel mach <rhyme label="b" type="f" corresp="#s32:l2">lopen</rhyme>.</l>
      </lg>
      <lg id="s33" type="stanza">
        <l id="s33:l1" met="4" type="-+">Ach! geef nu doch een wormke <rhyme label="a" type="m">kracht</rhyme>,</l>
        <l id="s33:l2" met="4" type="-+">Laet uwe macht in swackheyt <rhyme label="b" type="f">blijcken</rhyme>,</l>
        <l id="s33:l3" met="4" type="-+">Komt in mijn ziel, die op u <rhyme label="a" type="m" corresp="#s33:l1">wacht</rhyme>,</l>
        <l id="s33:l4" met="4" type="-+">En wilt daer nimmermeer uyt <rhyme label="b" type="f" corresp="#s33:l2">wijcken</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

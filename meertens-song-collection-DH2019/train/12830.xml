  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="5" type="-+">GOds volck had nu 'tseventigh Jaer <rhyme label="a" type="m">gewacht</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Doe Cyrus haer de vrydom <rhyme label="b" type="m">gaf</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Om na haer Landt te trecken <rhyme label="b" type="m" corresp="#s1:l2">af</rhyme>:</l>
        <l id="s1:l4" met="5" type="-+">Dit heyl is van de Joden niet <rhyme label="a" type="m" corresp="#s1:l1">veracht</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Sy bouwden strax den <rhyme label="c" type="f">Altaer</rhyme>.</l>
        <l id="s1:l6" met="3" type="-+">Haer haeters sochten al <rhyme label="c" type="f" corresp="#s1:l5">haer</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Gebouw te <rhyme label="d" type="m">hinderen</rhyme>.</l>
        <l id="s1:l8" met="3" type="-+">Men blies den Coningh <rhyme label="e" type="m">in</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Dat hier door zijn <rhyme label="e" type="m" corresp="#s1:l8">gewin</rhyme></l>
        <l id="s1:l10" met="3" type="-+">Soude <rhyme label="d" type="m" corresp="#s1:l7">verminderen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="5" type="-+">Daer na wiert Arthahsasta <rhyme label="a" type="m">Opper-heer</rhyme>:</l>
        <l id="s2:l2" met="4" type="-+">'tGebouw begon weer voort te <rhyme label="b" type="m">gaen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Maer haest mostmen 'tweer laten <rhyme label="b" type="m" corresp="#s2:l2">staen</rhyme>.</l>
        <l id="s2:l4" met="5" type="-+">De Kroon nam tot Darius doe haer <rhyme label="a" type="m" corresp="#s2:l1">keer</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Doe gingh men weder <rhyme label="c" type="f">bouwen</rhyme>:</l>
        <l id="s2:l6" met="3" type="-+">Men dorst sigh nauw <rhyme label="c" type="f" corresp="#s2:l5">vertrouwen</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Op 'tConincklijck <rhyme label="d" type="m">bevel</rhyme>.</l>
        <l id="s2:l8" met="3" type="-+">Maer door 'tPropheten <rhyme label="e" type="m">woort</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Gingh 'tbouwen spoedigh <rhyme label="e" type="m" corresp="#s2:l8">voort</rhyme>.</l>
        <l id="s2:l10" met="3" type="-+">En alles stont doe <rhyme label="d" type="m" corresp="#s2:l7">wel</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="5" type="-+">Gods volk wiert weer gedreyght met ander <rhyme label="a" type="m">quaet</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Door Hamans wreede moort <rhyme label="b" type="m">besluyt</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Om 'tJoodsche volk te roeyen <rhyme label="b" type="m" corresp="#s3:l2">uyt</rhyme>.</l>
        <l id="s3:l4" met="5" type="-+">'tBehoud was, Hesters Coninghlijcken <rhyme label="a" type="m" corresp="#s3:l1">staet</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Hester liet Haman <rhyme label="c" type="f">nooden</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Maer 'twas om hem te <rhyme label="c" type="f" corresp="#s3:l5">dooden</rhyme>:</l>
        <l id="s3:l7" met="3" type="-+">Israel wiert <rhyme label="d" type="m">verlost</rhyme>!</l>
        <l id="s3:l8" met="3" type="-+">Hamans trouwloose <rhyme label="e" type="m">raedt</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Deed' 'theydensch volck selfs <rhyme label="e" type="m" corresp="#s3:l8">quaet</rhyme></l>
        <l id="s3:l10" met="3" type="-+">'tHeeft veel haer bloet <rhyme label="d" type="m" corresp="#s3:l7">gekost</rhyme>.</l>
      </lg>
    </lg>
  </text>

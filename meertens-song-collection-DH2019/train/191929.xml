  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">DE zee lag <rhyme label="a" type="m">vlak</rhyme>,</l>
        <l id="s1:l2" met="2" type="-+">De windjes <rhyme label="b" type="f">zweegen</rhyme>;</l>
        <l id="s1:l3" met="3" type="-+">'t Scheen al tot rust <rhyme label="b" type="f" corresp="#s1:l2">genegen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">De moede landman koos het <rhyme label="a" type="m" corresp="#s1:l1">dak</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Daar ruischten over 't ruime <rhyme label="a" type="m" corresp="#s1:l1">vak</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Geen golfjes in de <rhyme label="c" type="f">stroomen</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Geen blaedjes aan de <rhyme label="c" type="f" corresp="#s1:l6">boomen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">'t Was vreede op <rhyme label="a" type="m">aard</rhyme>,</l>
        <l id="s2:l2" met="2" type="-+">Kalmte aan den <rhyme label="b" type="f">Hemel</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">In 't lugje geen <rhyme label="b" type="f" corresp="#s2:l2">gewemel</rhyme>;</l>
        <l id="s2:l4" met="4" type="-+">Geen wiekje roeide 'er <rhyme label="a" type="m" corresp="#s2:l1">hemelwaard</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">Was was hier zaligheids <rhyme label="a" type="m" corresp="#s2:l1">vergaard</rhyme>!</l>
        <l id="s2:l6" met="3" type="-+">Niets was 'er, dat zig <rhyme label="c" type="f">roerde</rhyme>;</l>
        <l id="s2:l7" met="3" type="-+">Het beekje alleen <rhyme label="c" type="f" corresp="#s2:l6">rumoerde</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Dat scheen, 't leek een <rhyme label="a" type="m">droom</rhyme>,</l>
        <l id="s3:l2" met="2" type="-+">Met zoetlyk <rhyme label="b" type="f">ruisschen</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Dees taal my toe te <rhyme label="b" type="f" corresp="#s3:l2">bruisschen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">‘Rustlievend stervling, <rhyme label="a" type="m" corresp="#s3:l1">wellekoom</rhyme>!</l>
        <l id="s3:l5" met="4" type="-+">‘Kom, zet U aan myn groenen <rhyme label="a" type="m" corresp="#s3:l1">zoom</rhyme>;</l>
        <l id="s3:l6" met="3" type="-+">‘Hier moogt ge bloempjes <rhyme label="c" type="f">pluiken</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">‘Die naar den Hemel <rhyme label="c" type="f" corresp="#s3:l6">ruiken</rhyme>.</l>
      </lg>
    </lg>

    <melody>Wenn mein Stündlein vorhanden ist</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Hendrik Rintjes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">De wijl de tijdt voor handen <rhyme label="a" type="m">is</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Dat wy hier moeten <rhyme label="b" type="f">scheyden</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Soo wil ons Godt also <rhyme label="a" type="m" corresp="#s1:l1">ghewis</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Ghenadelijck <rhyme label="b" type="f" corresp="#s1:l2">gheleyden</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Op dat wy dat betrachten <rhyme label="c" type="m">voort</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Dat wy alhier hebben <rhyme label="c" type="m" corresp="#s1:l5">ghehoort</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">En ons moghen <rhyme label="b" type="f" corresp="#s1:l2">bereyden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Op dat wy dan soo in dien <rhyme label="a" type="m">dagh</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Staen aen sijn rechter <rhyme label="b" type="f">zijde</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Als Christus sal maken <rhyme label="a" type="m" corresp="#s2:l1">ghewagh</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Komt ghy <rhyme label="b" type="f" corresp="#s2:l2">gebenedijde</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Besit het Rijck dat u <rhyme label="c" type="m">bereyt</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Is, van begin en <rhyme label="c" type="m" corresp="#s2:l5">eeuwigheyt</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Verlost van allen <rhyme label="b" type="f" corresp="#s2:l2">lijden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Hierom soo laet ons neerstigh <rhyme label="a" type="m">zijn</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Met bidden ende <rhyme label="b" type="f">waken</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Op dat wy hier uyt dese <rhyme label="a" type="m" corresp="#s3:l1">pijn</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Tot sulcken vreught <rhyme label="b" type="f" corresp="#s3:l2">gheraken</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">By Godt en sijn Enghelen <rhyme label="c" type="m">schoon</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Hier boven in des Hemels <rhyme label="c" type="m" corresp="#s3:l5">Throon</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Der Engh’len spijse <rhyme label="b" type="f" corresp="#s3:l2">smaken</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">O Godt, daer nae staet ons <rhyme label="a" type="m">begheert</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Laet ghy ons dat <rhyme label="b" type="f">ghelinghen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Dat uwen Naem worde <rhyme label="a" type="m" corresp="#s4:l1">ghe-eert</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Wat wy spreken en <rhyme label="b" type="f" corresp="#s4:l2">singhen</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Dat het gheschiede met <rhyme label="c" type="m">aendacht</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">En met der daet ook werd’ <rhyme label="c" type="m" corresp="#s4:l5">volbracht</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">En ons broos vleesch <rhyme label="b" type="f" corresp="#s4:l2">bedwinghen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Dat het den Gheest ghehoorsaem <rhyme label="a" type="m">zy</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Dit kort verganckelijck <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Met uw ghenaden woont ons <rhyme label="a" type="m" corresp="#s5:l1">by</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Uw vreede wilt ons <rhyme label="b" type="f" corresp="#s5:l2">gheven</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Houdt ons in rechter <rhyme label="c" type="m">eenigheyt</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Bewaert u volck en haer <rhyme label="c" type="m" corresp="#s5:l5">gheleyt</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Tot ghyse sult <rhyme label="b" type="f" corresp="#s5:l2">verheven</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">En voeren in u eeuwigh <rhyme label="a" type="m">Rijck</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Met der Hemelscher <rhyme label="b" type="f">scharen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Hier meed’ wilt ons <rhyme label="a" type="m" corresp="#s6:l1">ghenadelijck</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Godt al t’samen <rhyme label="b" type="f" corresp="#s6:l2">bewaren</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Op dat wy moghen gheschickt <rhyme label="c" type="m">staen</rhyme></l>
        <l id="s6:l6" met="4" type="-+">Als Hemel en Aerd’ sal <rhyme label="c" type="m" corresp="#s6:l5">vergaen</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">En Godt sal <rhyme label="b" type="f" corresp="#s6:l2">openbaren</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Ons ziel en lijf in uwe <rhyme label="a" type="m">handt</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">O Heer, wy u <rhyme label="b" type="f">bevelen</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Blijft ghy by ons aen allen <rhyme label="a" type="m" corresp="#s7:l1">kant</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Soo moghen wy niet <rhyme label="b" type="f" corresp="#s7:l2">felen</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Dewijl het moet ghescheyden <rhyme label="c" type="m">zijn</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Willen wy Godt lof singhen <rhyme label="c" type="m" corresp="#s7:l5">fijn</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Eenmoedigh uyt der <rhyme label="b" type="f" corresp="#s7:l2">kelen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">U Vader, Soon, en Heyl’ghe <rhyme label="a" type="m">Geest</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Eenighe Godt met <rhyme label="b" type="f">namen</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Al dat ghy hebt gheschapen <rhyme label="a" type="m" corresp="#s8:l1">meest</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Soud’ u loven te <rhyme label="b" type="f" corresp="#s8:l2">samen</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Nu wy scheyden aen desen <rhyme label="c" type="m">kant</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Houdt ons in uwer liefden <rhyme label="c" type="m" corresp="#s8:l5">bandt</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Door Iesum Christum, <rhyme label="b" type="f" corresp="#s8:l2">Amen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

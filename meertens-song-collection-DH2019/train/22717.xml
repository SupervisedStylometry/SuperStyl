<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>22717</id>
    <date>
      <year-start>1576</year-start>
      <year-end>1582</year-end>
    </date>
    <tags>
      <tag standard-name="gebedslied" translation="prayer">gebedslied</tag>
    </tags>
    <melody>Uit de diepte roep ik o Heer tot dij</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>David Joris</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Wt der diepten roep ick O Heere tot <rhyme label="a" type="m">dy</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Verhoort mijn stemme, maeckt my doch <rhyme label="a" type="m" corresp="#s1:l1">vry</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Van d'Helsche subjecty unde haer  <rhyme label="b" type="m">ghespuys</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Van's ongheloofs questy unde t'groot <rhyme label="b" type="m" corresp="#s1:l3">abuys</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Heer wilt mit u ooren aenmercken <rhyme label="a" type="m">my</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Die stem mijns smeeckens is alleen tot <rhyme label="a" type="m" corresp="#s2:l1">dy</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Ick ben inder herten vol smerten unde <rhyme label="b" type="m">pijn</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Want des Viants terten deurscherten <rhyme label="b" type="m" corresp="#s2:l3">mijn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Och Heere wildy achten die <rhyme label="a" type="m">misdaet</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Daer een noch gheen van int leven <rhyme label="a" type="m" corresp="#s3:l1">gaet</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Wildy mit hen int eewich Oordeel <rhyme label="b" type="m">gaen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Wie salder dan moghen blyven <rhyme label="b" type="m" corresp="#s3:l3">bestaen</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Immer des sijn wy seecker unde <rhyme label="a" type="m">ghewis</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Dat by u (O Godt) verghevinghe <rhyme label="a" type="m" corresp="#s4:l1">is</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Verwacht dijn Heer O <rhyme label="b" type="m">Israel</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Want goetheydt is by hem, dat weet ick <rhyme label="b" type="m" corresp="#s4:l3">wel</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Hierom verblijdt u Jerusalem <rhyme label="a" type="m">reyn</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Die Prins sal verlossen Israel <rhyme label="a" type="m" corresp="#s5:l1">certeyn</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Alleen deur t'Gheloove in synen <rhyme label="b" type="m">doot</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Daer hem der Sathan unde mennich aen <rhyme label="b" type="m" corresp="#s5:l3">stoot</rhyme>:</l>
      </lg>
    </lg>
  </text>
</song>

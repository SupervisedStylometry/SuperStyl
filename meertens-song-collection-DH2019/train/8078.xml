    <tags>
      <tag standard-name="geestelijk lied" translation="spiritual song">geestelijk lied</tag>
    </tags>
    <melody>Moi et mon compagnon</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Jan Jansz. Deutel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">HOe soud' ick swijghen <rhyme label="a" type="m">siet</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Van den Bruydegom te <rhyme label="b" type="f">singen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Een nieuwe <rhyme label="a" type="m" corresp="#s1:l1">vreughden-liedt</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Mijn gheest dunckt my <rhyme label="b" type="f" corresp="#s1:l2">t'ontspringhen</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Wanneer ick <rhyme label="c" type="m">peys</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Om sijne liefde <rhyme label="d" type="m">groot</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Het Woordt werdt <rhyme label="c" type="m" corresp="#s1:l5">vleys</rhyme>,</l>
        <l id="s1:l8" met="2" type="-+">En sterf den <rhyme label="d" type="m" corresp="#s1:l6">doodt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Door Adams sonde <rhyme label="a" type="m">quaedt</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Lagen wy in Godts <rhyme label="b" type="f">tooren</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Maer Godt ons <rhyme label="a" type="m" corresp="#s2:l1">toeverlaet</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Sandt sijn Soon <rhyme label="b" type="f" corresp="#s2:l2">uytverkoren</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Ons <rhyme label="c" type="m">Middelaer</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Ia Broeder ende <rhyme label="d" type="m">Vaer</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">Voorspraeck <rhyme label="c" type="m" corresp="#s2:l5">eenpaer</rhyme>,</l>
        <l id="s2:l8" met="2" type="-+">En Herder <rhyme label="d" type="m" corresp="#s2:l6">klaer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Hy daelde uyt 't Vaders <rhyme label="a" type="m">throon</rhyme></l>
        <l id="s3:l2" met="3" type="-+">De Heere groot van <rhyme label="b" type="f">machten</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Hy quam een Bruyt <rhyme label="a" type="m" corresp="#s3:l1">ydoon</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Roepen uyt veel <rhyme label="b" type="f" corresp="#s3:l2">geslachten</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Hy trock haer <rhyme label="c" type="m">an</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Reyn wite zijde <rhyme label="d" type="m">jent</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">Hy wordt haer <rhyme label="c" type="m" corresp="#s3:l5">man</rhyme></l>
        <l id="s3:l8" met="2" type="-+">Seer <rhyme label="d" type="m" corresp="#s3:l6">pertinent</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Christus seyt <rhyme label="a" type="m">voorwaer</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Ick en ben niet <rhyme label="b" type="f">gekomen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Om dat ick den <rhyme label="a" type="m" corresp="#s4:l1">sondaer</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Soud' straffen en <rhyme label="b" type="f" corresp="#s4:l2">verdoemen</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Bekeert hy <rhyme label="c" type="m">hem</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Soo sal hy saligh <rhyme label="d" type="m">zijn</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">Volght hy de <rhyme label="c" type="m" corresp="#s4:l5">stem</rhyme></l>
        <l id="s4:l8" met="2" type="-+">Der woorden <rhyme label="d" type="m" corresp="#s4:l6">mijn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Verloren schaepkens <rhyme label="a" type="m">dom</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Die sal ick weder <rhyme label="b" type="f">soecken</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">En brenghen <rhyme label="a" type="m" corresp="#s5:l1">wederom</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Wt al des werelts <rhyme label="b" type="f" corresp="#s5:l2">hoecken</rhyme></l>
        <l id="s5:l5" met="2" type="-+">In mijnen <rhyme label="c" type="m">stal</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">By mijne Schaepkens <rhyme label="d" type="m">al</rhyme>,</l>
        <l id="s5:l7" met="2" type="-+">Daer ick <rhyme label="c" type="m" corresp="#s5:l5">'tghetal</rhyme></l>
        <l id="s5:l8" met="2" type="-+">Selfs weyden <rhyme label="d" type="m" corresp="#s5:l6">sal</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">'Tvlas noch 'tghekrookte <rhyme label="a" type="m">riet</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Wil ick blusschen noch <rhyme label="b" type="f">breken</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Oft oock den armen <rhyme label="a" type="m" corresp="#s6:l1">niet</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Verlaten noch <rhyme label="b" type="f" corresp="#s6:l2">versteken</rhyme></l>
        <l id="s6:l5" met="2" type="-+">Sieck en <rhyme label="c" type="m">ghewont</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Wil ick maecken <rhyme label="d" type="m">ghesondt</rhyme>,</l>
        <l id="s6:l7" met="2" type="-+">Met haer <rhyme label="c" type="m" corresp="#s6:l5">terstondt</rhyme></l>
        <l id="s6:l8" met="2" type="-+">Maecken <rhyme label="d" type="m" corresp="#s6:l6">verbondt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">De blinden sullen <rhyme label="a" type="m">sien</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">De kreup'le sullen <rhyme label="b" type="f">treden</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">En oock de stomme <rhyme label="a" type="m" corresp="#s7:l1">lien</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Spreecken van mijner <rhyme label="b" type="f" corresp="#s7:l2">vreden</rhyme>,</l>
        <l id="s7:l5" met="2" type="-+">De doove <rhyme label="c" type="m">swaer</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Mijn woorden hooren <rhyme label="d" type="m">klaer</rhyme>,</l>
        <l id="s7:l7" met="2" type="-+">Van dooder <rhyme label="c" type="m" corresp="#s7:l5">schaer</rhyme>,</l>
        <l id="s7:l8" met="2" type="-+">Leven neemt <rhyme label="d" type="m" corresp="#s7:l6">waer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Ick sal verlossen <rhyme label="a" type="m">uyt</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Die daer ligghen <rhyme label="b" type="f">ghevanghen</rhyme>.</l>
        <l id="s8:l3" met="3" type="-+">Ia houden voor mijn <rhyme label="a" type="m" corresp="#s8:l1">Bruyt</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">En wijsen mijne <rhyme label="b" type="f" corresp="#s8:l2">gangen</rhyme>,</l>
        <l id="s8:l5" met="2" type="-+">Met mijner <rhyme label="c" type="m">handt</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Leyden, noyt soo <rhyme label="d" type="m">playsant</rhyme>,</l>
        <l id="s8:l7" met="2" type="-+">In 'tVaders <rhyme label="c" type="m" corresp="#s8:l5">landt</rhyme>,</l>
        <l id="s8:l8" met="2" type="-+">Seer <rhyme label="d" type="m" corresp="#s8:l6">triumphant</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Ick predick <rhyme label="a" type="m">allegaer</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Die arme zijn van <rhyme label="b" type="f">gheeste</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Een gulden vrye <rhyme label="a" type="m" corresp="#s9:l1">jaer</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Sabbath en lover <rhyme label="b" type="f" corresp="#s9:l2">feeste</rhyme>,</l>
        <l id="s9:l5" met="2" type="-+">In't <rhyme label="c" type="m">openbaer</rhyme></l>
        <l id="s9:l6" met="3" type="-+">'tEuangeli <rhyme label="d" type="m">eerbaer</rhyme>,</l>
        <l id="s9:l7" met="2" type="-+">Voor ver en <rhyme label="c" type="m" corresp="#s9:l5">naer</rhyme></l>
        <l id="s9:l8" met="2" type="-+">Een blijde <rhyme label="d" type="m" corresp="#s9:l6">maer</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Nu komt alle tot <rhyme label="a" type="m">my</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Die sijt met last <rhyme label="b" type="f">beladen</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Ick sal u maecken <rhyme label="a" type="m" corresp="#s10:l1">vry</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Door mijn rijcke <rhyme label="b" type="f" corresp="#s10:l2">ghenaden</rhyme>,</l>
        <l id="s10:l5" met="2" type="-+">Mijn jock is <rhyme label="c" type="m">soet</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Mijn last is kleyn <rhyme label="d" type="m">ghewicht</rhyme>,</l>
        <l id="s10:l7" met="2" type="-+">Doet rechte <rhyme label="c" type="m" corresp="#s10:l5">boet</rhyme>,</l>
        <l id="s10:l8" met="2" type="-+">Wandelt in't <rhyme label="d" type="m" corresp="#s10:l6">licht</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Ick ben het Hemels <rhyme label="a" type="m">broodt</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Ghedaelt om u te <rhyme label="b" type="f">gheven</rhyme></l>
        <l id="s11:l3" met="3" type="-+">Van uyt mijns Vaders <rhyme label="a" type="m" corresp="#s11:l1">schoot</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Wie daer af eet sal <rhyme label="b" type="f" corresp="#s11:l2">leven</rhyme>,</l>
        <l id="s11:l5" met="2" type="-+">Ghelooft in <rhyme label="c" type="m">my</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Dat ick van boven <rhyme label="d" type="m">zy</rhyme>,</l>
        <l id="s11:l7" met="2" type="-+">Niet van bene'en <rhyme label="c" type="m" corresp="#s11:l5">vry</rhyme>,</l>
        <l id="s11:l8" met="2" type="-+">Ghelijck als <rhyme label="d" type="m" corresp="#s11:l6">ghy</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Een levende <rhyme label="a" type="m">fonteyn</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Ben ick tot deser <rhyme label="b" type="f">ure</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">De wegh de waerheydt <rhyme label="a" type="m" corresp="#s12:l1">reyn</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Een voorspraeck, licht en <rhyme label="b" type="f" corresp="#s12:l2">deure</rhyme>,</l>
        <l id="s12:l5" met="2" type="-+">Een <rhyme label="c" type="m">fondament</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Een hoecksteen <rhyme label="d" type="m">excellent</rhyme>,</l>
        <l id="s12:l7" met="2" type="-+">Davids wortel <rhyme label="c" type="m" corresp="#s12:l5">jent</rhyme>,</l>
        <l id="s12:l8" met="2" type="-+">'Tbegin end' <rhyme label="d" type="m" corresp="#s12:l6">endt</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Weest heyligh, seyt de <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Als ick, dits <rhyme label="b" type="f">d'informacy</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">En blijft in mijner <rhyme label="a" type="m" corresp="#s13:l1">leer</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Soo sult ghy door mijn <rhyme label="b" type="f" corresp="#s13:l2">gracy</rhyme></l>
        <l id="s13:l5" met="2" type="-+">Verwinnen <rhyme label="c" type="m">bloot</rhyme></l>
        <l id="s13:l6" met="3" type="-+">Hel, sonde, duyvel, <rhyme label="d" type="m">doodt</rhyme></l>
        <l id="s13:l7" met="2" type="-+">Vyanden <rhyme label="c" type="m" corresp="#s13:l5">snoot</rhyme>,</l>
        <l id="s13:l8" met="2" type="-+">Kleyn ende <rhyme label="d" type="m" corresp="#s13:l6">groot</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Broeders en Susters <rhyme label="a" type="m">fijn</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Laet ons <rhyme label="b" type="f">verjubileren</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">'Tsal noch een weynigh <rhyme label="a" type="m" corresp="#s14:l1">zijn</rhyme></l>
        <l id="s14:l4" met="3" type="-+">Dat sy ons <rhyme label="b" type="f" corresp="#s14:l2">tribuleren</rhyme>,</l>
        <l id="s14:l5" met="2" type="-+">Volstandigh <rhyme label="c" type="m">blijft</rhyme>,</l>
        <l id="s14:l6" met="3" type="-+">Als rancken <rhyme label="d" type="m">ingelijft</rhyme></l>
        <l id="s14:l7" met="2" type="-+">Godts gheest <rhyme label="c" type="m" corresp="#s14:l5">beklijft</rhyme>,</l>
        <l id="s14:l8" met="2" type="-+">Waer hy u <rhyme label="d" type="m" corresp="#s14:l6">drijft</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Lof Godt ons Prince <rhyme label="a" type="m">reyn</rhyme>,</l>
        <l id="s15:l2" met="3" type="-+">Lof moeten wy u <rhyme label="b" type="f">geven</rhyme>,</l>
        <l id="s15:l3" met="3" type="-+">Lof onsen <rhyme label="a" type="m" corresp="#s15:l1">Capiteyn</rhyme>,</l>
        <l id="s15:l4" met="3" type="-+">Lof Hopman hoogh <rhyme label="b" type="f" corresp="#s15:l2">verheven</rhyme>,</l>
        <l id="s15:l5" met="2" type="-+">Lof Heer <rhyme label="c" type="m">bequaem</rhyme>,</l>
        <l id="s15:l6" met="3" type="-+">Lof zy dijn groote <rhyme label="d" type="m">Naem</rhyme>,</l>
        <l id="s15:l7" met="2" type="-+">Lof nae 't <rhyme label="c" type="m" corresp="#s15:l5">betaem</rhyme>,</l>
        <l id="s15:l8" met="2" type="-+">Vader <rhyme label="d" type="m" corresp="#s15:l6">eersaem</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

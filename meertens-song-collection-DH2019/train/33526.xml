<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>33526</id>
    <date>
      <year-start>1614</year-start>
      <year-end>1614</year-end>
    </date>
    <tags>
      <tag standard-name="heiligenlied" translation="saint song">heiligenlied</tag>
    </tags>
    <melody>Als alle akers rijpen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Rumoldus Batavus</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Mijn broeders wilt toch <rhyme label="a" type="f">hooren</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Van Thomas die Diedimus <rhyme label="b" type="m">hiet</rhyme></l>
        <l id="s1:l3" met="3" type="-+">In Galileen <rhyme label="a" type="f" corresp="#s1:l1">ghebooren</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Van Christus mede <rhyme label="a" type="f" corresp="#s1:l1">vercooren</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Al tot zyn Apostel <rhyme label="b" type="m" corresp="#s1:l2">siet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Doen Christus Lazaro ginck <rhyme label="a" type="f">beweenen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">En had hem vander doot <rhyme label="b" type="m">verweckt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Doen wouden die Ioden hem <rhyme label="a" type="f" corresp="#s2:l1">steenen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Maer als den Heer daer weer ghinck <rhyme label="a" type="f" corresp="#s2:l1">heenen</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Had Thomas hem daer geern <rhyme label="b" type="m" corresp="#s2:l2">afgetreckt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Doen Christus nu waer <rhyme label="a" type="f">verresen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Ende vanden anderen was <rhyme label="b" type="m">ghesien</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Maer Thomas alzoo wy <rhyme label="a" type="f" corresp="#s3:l1">lesen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Gheheele acht daeghen by <rhyme label="a" type="f" corresp="#s3:l1">desen</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Bleef in ongheloof <rhyme label="b" type="m" corresp="#s3:l2">allien</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Hier na zoo ist <rhyme label="a" type="f">ghebleecken</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Dat den Heer hem weder <rhyme label="b" type="m">openbaert</rhyme></l>
        <l id="s4:l3" met="3" type="-+">En ginck tot Thomas <rhyme label="a" type="f" corresp="#s4:l1">spreecken</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Wilt v vinger, en hant in mijn zyde <rhyme label="a" type="f" corresp="#s4:l1">steecken</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Doen Tomas zyn gheloof <rhyme label="b" type="m" corresp="#s4:l2">verclaert</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Hy sprack myn Godt, mijn <rhyme label="a" type="f">Heere</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Hoe ben ick aldus <rhyme label="b" type="m">verdooft</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Christus dien sprack doen <rhyme label="a" type="f" corresp="#s5:l1">weere</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Want ghy my siet v <rhyme label="a" type="f" corresp="#s5:l1">heere</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Thoma zoo hebt ghy <rhyme label="b" type="m" corresp="#s5:l2">ghelooft</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Doen ginck Thomas zyn gheloof <rhyme label="a" type="f">verclaren</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Dat te voren soo wanckelbaer <rhyme label="b" type="m">was</rhyme></l>
        <l id="s6:l3" met="3" type="-+">In Indien ginck hyt <rhyme label="a" type="f" corresp="#s6:l1">openbaren</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Aen veel volckeren die in ongeloof <rhyme label="a" type="f" corresp="#s6:l1">waeren</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Haer krancheden hy oock <rhyme label="b" type="m" corresp="#s6:l2">ghenas</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Veel menschen dede hy daer <rhyme label="a" type="f">bekeeren</rhyme></l>
        <l id="s7:l2" met="3" type="-+">En gheloofden in Godes <rhyme label="b" type="m">woort</rhyme></l>
        <l id="s7:l3" met="3" type="-+">D’afgoden dede hy <rhyme label="a" type="f" corresp="#s7:l1">destrueeren</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Een Godt des hemels dede hy <rhyme label="a" type="f" corresp="#s7:l1">eeren</rhyme></l>
        <l id="s7:l5" met="4" type="-+">Dit heeft haer Coninck haest <rhyme label="b" type="m" corresp="#s7:l2">verhoort</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Dese dede den Apostel daer <rhyme label="a" type="f">drieghen</rhyme></l>
        <l id="s8:l2" met="3" type="-+">So hy niet en aenbade de <rhyme label="b" type="m">Son</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Maer Thomas en wilde niet <rhyme label="a" type="f" corresp="#s8:l1">swieghen</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Tot Christum meende hy hem te <rhyme label="a" type="f" corresp="#s8:l1">crieghen</rhyme></l>
        <l id="s8:l5" met="4" type="-+">Dan niet met allen dat Thomas <rhyme label="b" type="m" corresp="#s8:l2">won</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Sy deden Thomas door <rhyme label="a" type="f">steecken</rhyme></l>
        <l id="s9:l2" met="3" type="-+">So waren zy op hem <rhyme label="b" type="m">verwoet</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Mit dat hy dede <rhyme label="a" type="f" corresp="#s9:l1">breecken</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">En op haer afgoden ginck <rhyme label="a" type="f" corresp="#s9:l1">spreecken</rhyme></l>
        <l id="s9:l5" met="4" type="-+">Dus storten sy zyn onnosele <rhyme label="b" type="m" corresp="#s9:l2">bloet</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Dus zyn die dienaers der <rhyme label="a" type="f">Heeren</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Den eenen hier, en dander <rhyme label="b" type="m">daer</rhyme></l>
        <l id="s10:l3" met="3" type="-+">So zy om Gods woort te <rhyme label="a" type="f" corresp="#s10:l1">leeren</rhyme></l>
        <l id="s10:l4" met="3" type="-+">En die menschen te doen <rhyme label="a" type="f" corresp="#s10:l1">bekeeren</rhyme></l>
        <l id="s10:l5" met="4" type="-+">Ghestoruen d’een voor en d’ander <rhyme label="b" type="m" corresp="#s10:l2">naer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

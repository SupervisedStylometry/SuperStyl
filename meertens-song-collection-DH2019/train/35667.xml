  <author>Albertus Buitendyck</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">CLop-Broertjes, voeght u <rhyme label="a" type="f">leven</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Na de Gift, die 'k u zal <rhyme label="a" type="f" corresp="#s1:l1">gheven</rhyme>.</l>
        <l id="s1:l3" met="4" type="-+">'k Schenk u lieden een wijngaerts <rhyme label="b" type="m">ranck</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Met struyck en wortel. Ontfanght in <rhyme label="b" type="m" corresp="#s1:l3">danck</rhyme></l>
        <l id="s1:l5" met="2" type="-+">Mijn Gift, en <rhyme label="b" type="m" corresp="#s1:l3">sanck</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">In geen boom op der <rhyme label="a" type="f">aerde</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Kan men enten de <rhyme label="a" type="f" corresp="#s2:l1">Wijngaerde</rhyme>.</l>
        <l id="s2:l3" met="4" type="-+">Klop-Broertjes, leert soo jongh als <rhyme label="b" type="m">oudt</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Dat ghy u zuyverheyt, zuyver <rhyme label="b" type="m" corresp="#s2:l3">hout</rhyme>:</l>
        <l id="s2:l5" met="2" type="-+">Godt alleen <rhyme label="b" type="m" corresp="#s2:l3">trout</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">De Wijngaert moet men <rhyme label="a" type="f">snoeyen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Vast-binden zalse wel <rhyme label="a" type="f" corresp="#s3:l1">groeyen</rhyme>.</l>
        <l id="s3:l3" met="4" type="-+">Af-snoeyt, en wint lusten <rhyme label="b" type="m">onkuys</rhyme>;</l>
        <l id="s3:l4" met="4" type="-+">Heght 't hart end' oogh aen 't eeuwigh, end' <rhyme label="b" type="m" corresp="#s3:l3">kruys</rhyme>:</l>
        <l id="s3:l5" met="2" type="-+">Bemint u <rhyme label="b" type="m" corresp="#s3:l3">kluys</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">'t Is goedt zoo men <rhyme label="a" type="f">ontblooten</rhyme></l>
        <l id="s4:l2" met="3" type="-+">De wortel, Mis daerom <rhyme label="a" type="f" corresp="#s4:l1">stooten</rhyme>.</l>
        <l id="s4:l3" met="4" type="-+">Bekent, dat ghy dreck, en niet <rhyme label="b" type="m">zijt</rhyme>.</l>
        <l id="s4:l4" met="4" type="-+">Denckt op de doodt, en Goods oordeels <rhyme label="b" type="m" corresp="#s4:l3">tijdt</rhyme>.</l>
        <l id="s4:l5" met="2" type="-+">U quaedt <rhyme label="b" type="m" corresp="#s4:l3">belijdt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Blossems doen 't Serpent <rhyme label="a" type="f">vluchten</rhyme>.</l>
        <l id="s5:l2" met="3" type="-+">Wit en bloedigh zijn de <rhyme label="a" type="f" corresp="#s5:l1">vruchten</rhyme>.</l>
        <l id="s5:l3" met="4" type="-+">Met vasten, bidden Satan <rhyme label="b" type="m">jaeght</rhyme>.</l>
        <l id="s5:l4" met="4" type="-+">In voorspoedt en lijden Godt <rhyme label="b" type="m" corresp="#s5:l3">behaeght</rhyme>:</l>
        <l id="s5:l5" met="2" type="-+">'t Hart danckbaer <rhyme label="b" type="m" corresp="#s5:l3">draeght</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Hoe oudt dats' is van <rhyme label="a" type="f">Iaren</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Vruchten vermindert noch <rhyme label="a" type="f" corresp="#s6:l1">blaren</rhyme>.</l>
        <l id="s6:l3" met="4" type="-+">Met aerdts niet meer als noodigh <rhyme label="b" type="m">moeyt</rhyme>;</l>
        <l id="s6:l4" met="4" type="-+">Thoont dat uwe yver altijt <rhyme label="b" type="m" corresp="#s6:l3">bloeyt</rhyme>;</l>
        <l id="s6:l5" met="2" type="-+">In deughden <rhyme label="b" type="m" corresp="#s6:l3">groeyt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">De Druyf geparst, na <rhyme label="a" type="f">wenschen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Versterckt, verheught 't hart der <rhyme label="a" type="f" corresp="#s7:l1">Menschen</rhyme>.</l>
        <l id="s7:l3" met="4" type="-+">Soeckt troost en vreugt in die, <rhyme label="b" type="m">alleen</rhyme></l>
        <l id="s7:l4" met="4" type="-+">De swaerdse bloedige pars most <rhyme label="b" type="m" corresp="#s7:l3">treen</rhyme>;</l>
        <l id="s7:l5" met="2" type="-+">In anders <rhyme label="b" type="m" corresp="#s7:l3">geen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Wordt by d'Wijngaert <rhyme label="a" type="f">gevonde</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Warmoes, of kool, treurt <rhyme label="a" type="f" corresp="#s8:l1">tersonde</rhyme>.</l>
        <l id="s8:l3" met="4" type="-+">Schout als fenijn geselschap <rhyme label="b" type="m">quaedt</rhyme>.</l>
        <l id="s8:l4" met="4" type="-+">Leeft na Goods Wet, en d'Overste <rhyme label="b" type="m" corresp="#s8:l3">raedt</rhyme>.</l>
        <l id="s8:l5" met="2" type="-+">Mijdt 's Wereldts <rhyme label="b" type="m" corresp="#s8:l3">praet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Vuyle douw, koude <rhyme label="a" type="f">vlagen</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Blossems konne niet <rhyme label="a" type="f" corresp="#s9:l1">verdragen</rhyme>.</l>
        <l id="s9:l3" met="4" type="-+">Zoo ghy van u devocy <rhyme label="b" type="m">wijckt</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">En na 's werelts meer, als 't eeuwigh <rhyme label="b" type="m" corresp="#s9:l3">kijckt</rhyme>,</l>
        <l id="s9:l5" met="2" type="-+">U staet <rhyme label="b" type="m" corresp="#s9:l3">beswijckt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Christe! Wijngaert <rhyme label="a" type="f">waerachtigh</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Geeft door u vijf wonden <rhyme label="a" type="f" corresp="#s10:l1">krachtigh</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Dat de Klop-Broertjes <rhyme label="b" type="m">allegaer</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Zuyver blijven, en altijdt <rhyme label="b" type="m" corresp="#s10:l3">vruchtbaer</rhyme>,</l>
        <l id="s10:l5" met="2" type="-+">Vreughden daer <rhyme label="b" type="m" corresp="#s10:l3">naer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

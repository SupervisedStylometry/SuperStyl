    <melody>Het was eens joden dochter</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ALs zijn v goeden hier <rhyme label="a" type="f">kleene</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Ghy kerstenen en weest niet <rhyme label="b" type="m">veruaert</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Troost v in God <rhyme label="a" type="f" corresp="#s1:l1">alleene</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Want hy en anders <rhyme label="a" type="f" corresp="#s1:l1">gheene</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Is die siel ende lijf <rhyme label="b" type="m" corresp="#s1:l2">bewaert</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Die haer tot ghiericheyt <rhyme label="a" type="f">keeren</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Sy doen <rhyme label="b" type="m">Afgoderie</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Want niemant en mach twee <rhyme label="a" type="f" corresp="#s2:l1">Heeren</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Seyt Christus wel dienen noch <rhyme label="a" type="f" corresp="#s2:l1">eeren</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Die malcanderen zijn <rhyme label="b" type="m" corresp="#s2:l2">partye</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Werpt in God al v <rhyme label="a" type="f">sorghen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Hy sal v seyt Dauid <rhyme label="b" type="m">voorsien</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Sorcht heden niet voor <rhyme label="a" type="f" corresp="#s3:l1">morghen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Want wil ons God niet <rhyme label="a" type="f" corresp="#s3:l1">borghen</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Wy en zijn niet versekert van <rhyme label="b" type="m" corresp="#s3:l2">dien</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Die voghelen wilt <rhyme label="a" type="f">aenmercken</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Uander locht minst ende <rhyme label="b" type="m">meest</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Sy en saeyen, sy en mayen noch <rhyme label="a" type="f" corresp="#s4:l1">wercken</rhyme></l>
        <l id="s4:l4" met="3" type="-+">God voetse oorcondich den <rhyme label="a" type="f" corresp="#s4:l1">clercken</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Waer vooren zijn wy dan <rhyme label="b" type="m" corresp="#s4:l2">beureest</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Ghy Christelicke <rhyme label="a" type="f">sinnen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Merct doch die lelyen <rhyme label="b" type="m">an</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Sy en weuen noch sy en <rhyme label="a" type="f" corresp="#s5:l1">spinnen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Maer in Salomons throon <rhyme label="a" type="f" corresp="#s5:l1">binnen</rhyme></l>
        <l id="s5:l5" met="3" type="-+">En was noyt haers ghelijck <rhyme label="b" type="m" corresp="#s5:l2">nochtan</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Gheeft God schoonheyt <rhyme label="a" type="f">onghemeten</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Dat heden is schoon ende <rhyme label="b" type="m">blanck</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Ende morghen inden ouen wert <rhyme label="a" type="f" corresp="#s6:l1">ghesmeten</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Hoe soude hy ons dan <rhyme label="a" type="f" corresp="#s6:l1">vergheten</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Hoe blijft v ghelooue dus <rhyme label="b" type="m" corresp="#s6:l2">cranck</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">O menschen broosch als <rhyme label="a" type="f">scheruen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Wat mach v baten <rhyme label="b" type="m">dat</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Dat ghy crijcht al tswerelts <rhyme label="a" type="f" corresp="#s7:l1">eruen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Als ghy laet v siele <rhyme label="a" type="f" corresp="#s7:l1">bederuen</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Ende verliest den hemelschen <rhyme label="b" type="m" corresp="#s7:l2">schat</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Int Euangelie <rhyme label="a" type="f">puere</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Staet van eenen rijcken <rhyme label="b" type="m">Baroen</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Die hadde sulck <rhyme label="a" type="f" corresp="#s8:l1">auentuere</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Dat hy meerderen moest zijn <rhyme label="a" type="f" corresp="#s8:l1">schuere</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Soude hy zijn vruchten in <rhyme label="b" type="m" corresp="#s8:l2">doen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Aensiende al zijn <rhyme label="a" type="f">tresooren</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Tsauens als hy te bedde <rhyme label="b" type="m">lach</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Hy sprack, o siele <rhyme label="a" type="f" corresp="#s9:l1">vercoren</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Wilt nv solaes <rhyme label="a" type="f" corresp="#s9:l1">orbooren</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Want ghy hebt al datmen hebben <rhyme label="b" type="m" corresp="#s9:l2">mach</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Maer hy en heeft Gods voys <rhyme label="a" type="f">ghepresen</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Niet ghehoort die riep, o arm <rhyme label="b" type="m">dwaes</rhyme></l>
        <l id="s10:l3" met="3" type="-+">U siele sal midts <rhyme label="a" type="f" corresp="#s10:l1">desen</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Te nacht noch van v genomen <rhyme label="a" type="f" corresp="#s10:l1">wesen</rhyme></l>
        <l id="s10:l5" met="3" type="-+">Uoor dit tijttelicke <rhyme label="b" type="m" corresp="#s10:l2">solaes</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Die doot die is <rhyme label="a" type="f">ghecomen</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Al inder seluer <rhyme label="b" type="m">nacht</rhyme></l>
        <l id="s11:l3" met="3" type="-+">En heeft zijn siel wech <rhyme label="a" type="f" corresp="#s11:l1">ghenomen</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Wat hielpen zijn <rhyme label="a" type="f" corresp="#s11:l1">rijcdommen</rhyme></l>
        <l id="s11:l5" met="3" type="-+">Ende daer toe zijn stercke <rhyme label="b" type="m" corresp="#s11:l2">macht</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Soect God in al zijn <rhyme label="a" type="f">paden</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Ist dat God ons <rhyme label="b" type="m">bystaet</rhyme></l>
        <l id="s12:l3" met="3" type="-+">Wie mach ons seyt Paulus <rhyme label="a" type="f" corresp="#s12:l1">schaden</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Siel ende lijf sal hy <rhyme label="a" type="f" corresp="#s12:l1">versaden</rhyme></l>
        <l id="s12:l5" met="3" type="-+">Leeft altijt na zijnen <rhyme label="b" type="m" corresp="#s12:l2">raet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

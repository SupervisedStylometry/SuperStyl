    <tags>
      <tag standard-name="heiligenlied" translation="saint song">heiligenlied</tag>
    </tags>
    <melody>Een kindje is ons geboren</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Albertus Buitendyck</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">LAet ons 't licht van <rhyme label="a" type="f">Assysen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">'t Licht van de heele <rhyme label="b" type="m">aerdt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Sint Clara, 't klaer licht <rhyme label="a" type="f" corresp="#s1:l1">prijsen</rhyme>.</l>
        <l id="s1:l4" met="3" type="-+">Voor dat sy is <rhyme label="b" type="m" corresp="#s1:l2">gebaert</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Van Christus is <rhyme label="c" type="f">gepresen</rhyme>;</l>
        <l id="s1:l6" met="2" type="-+">Want van haer <rhyme label="d" type="m">zeydt</rhyme>:</l>
        <l id="s1:l7" met="3" type="-+">Dat sy 's wereldts licht <rhyme label="c" type="f" corresp="#s1:l5">wesen</rhyme></l>
        <l id="s1:l8" met="2" type="-+">Sal, vol <rhyme label="d" type="m" corresp="#s1:l6">klaerheydt</rhyme>.</l>
        <l id="s1:l9" met="4" type="-+">Laet ons met <rhyme label="e" type="f">stemme</rhyme>.</l>
        <l id="s1:l10" met="2" type="-+">Heden <rhyme label="f" type="m">met</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Al 's werelts <rhyme label="a" type="f">duysterheden</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Voor Claraes klaerheydt <rhyme label="b" type="m">vlucht</rhyme>.</l>
        <l id="s2:l3" met="3" type="-+">d'Armen spijst, en <rhyme label="a" type="f" corresp="#s2:l1">bekleeden</rhyme>:</l>
        <l id="s2:l4" met="3" type="-+">In Godt neemt haer <rhyme label="b" type="m" corresp="#s2:l2">genucht</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">De sonden schout en <rhyme label="c" type="f">mijde</rhyme>.</l>
        <l id="s2:l6" met="2" type="-+">Al Christus <rhyme label="d" type="m">smart</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">En doodt met <rhyme label="c" type="f" corresp="#s2:l5">mede-lijde</rhyme></l>
        <l id="s2:l8" met="2" type="-+">Voelt in haer <rhyme label="d" type="m" corresp="#s2:l6">hart</rhyme>.</l>
        <l id="s2:l9" met="4" type="-+">Laet ons <rhyme label="e" type="f">met</rhyme></l>
        <l id="s2:l10" met="2" type="-+">Heden <rhyme label="f" type="m">met</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Sy volght Franciscus <rhyme label="a" type="f">paden</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Die al haer hayr <rhyme label="b" type="m">af-snijt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Stracx 's Werelts al <rhyme label="a" type="f" corresp="#s3:l1">versmade</rhyme>:</l>
        <l id="s3:l4" met="3" type="-+">Geeft haer 't geest'lijck <rhyme label="b" type="m" corresp="#s3:l2">habijt</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Satan kan 't niet <rhyme label="c" type="f">verdragen</rhyme></l>
        <l id="s3:l6" met="2" type="-+">Dat sy dit <rhyme label="d" type="m">doet</rhyme>.</l>
        <l id="s3:l7" met="3" type="-+">d' Ouders haer hierom <rhyme label="c" type="f" corresp="#s3:l5">plagen</rhyme>,</l>
        <l id="s3:l8" met="2" type="-+">Met al haer <rhyme label="d" type="m" corresp="#s3:l6">bloedt</rhyme>.</l>
        <l id="s3:l9" met="4" type="-+">Laet ons <rhyme label="e" type="f">met</rhyme></l>
        <l id="s3:l10" met="2" type="-+">Heden <rhyme label="f" type="m">met</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Als Wolven siet haer <rhyme label="a" type="f">vrinden</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">'t Lam loopt, houdt vast 't <rhyme label="b" type="m">autaer</rhyme>.</l>
        <l id="s4:l3" met="3" type="-+">Wordt als een klip, die <rhyme label="a" type="f" corresp="#s4:l1">winden</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Vreest, noch tempeesten <rhyme label="b" type="m" corresp="#s4:l2">swaer</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Agnes, doet haer <rhyme label="c" type="f">gebeden</rhyme>,</l>
        <l id="s4:l6" met="2" type="-+">Haer Suster, <rhyme label="d" type="m">rat</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Met veel Princesse <rhyme label="c" type="f" corresp="#s4:l5">mede</rhyme></l>
        <l id="s4:l8" met="2" type="-+">Volgen haer <rhyme label="d" type="m" corresp="#s4:l6">pat</rhyme>.</l>
        <l id="s4:l9" met="4" type="-+">Laet ons <rhyme label="e" type="f">met</rhyme></l>
        <l id="s4:l10" met="2" type="-+">Heden <rhyme label="f" type="m">met</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Sint Claraes deughde <rhyme label="a" type="f">stralen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Schijnen door 's Wereldts <rhyme label="b" type="m">rondt</rhyme>.</l>
        <l id="s5:l3" met="3" type="-+">Haer nedrigheydt <rhyme label="a" type="f" corresp="#s5:l1">verhalen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Noch deughden sal geen <rhyme label="b" type="m" corresp="#s5:l2">mondt</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Sy geeft in haer <rhyme label="c" type="f">armoede</rhyme></l>
        <l id="s5:l6" met="2" type="-+">Aelmisse <rhyme label="d" type="m">groot</rhyme>.</l>
        <l id="s5:l7" met="3" type="-+">Vijfmael thien Nonnen <rhyme label="c" type="f" corresp="#s5:l5">voeden</rhyme></l>
        <l id="s5:l8" met="2" type="-+">Met een half <rhyme label="d" type="m" corresp="#s5:l6">broodt</rhyme></l>
        <l id="s5:l9" met="4" type="-+">Laet ons <rhyme label="e" type="f">met</rhyme></l>
        <l id="s5:l10" met="2" type="-+">Heden <rhyme label="f" type="m">met</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Met 't hayre kleedt, en <rhyme label="a" type="f">waecken</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">En vasten 't vlees <rhyme label="b" type="m">castijt</rhyme>.</l>
        <l id="s6:l3" met="3" type="-+">Doet vluchten d'helsche <rhyme label="a" type="f" corresp="#s6:l1">Draecken</rhyme>;</l>
        <l id="s6:l4" met="3" type="-+">Sy bidt de meeste <rhyme label="b" type="m" corresp="#s6:l2">tijdt</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Haer hart is <rhyme label="c" type="f">opgetooge</rhyme>,</l>
        <l id="s6:l6" met="2" type="-+">Soo dra sy <rhyme label="d" type="m">bidt</rhyme>.</l>
        <l id="s6:l7" met="3" type="-+">Godt heeft altijdt voor <rhyme label="c" type="f" corresp="#s6:l5">oogen</rhyme>;</l>
        <l id="s6:l8" met="2" type="-+">Haer ziel blijft <rhyme label="d" type="m" corresp="#s6:l6">wit</rhyme>.</l>
        <l id="s6:l9" met="4" type="-+">Laet ons <rhyme label="e" type="f">met</rhyme></l>
        <l id="s6:l10" met="2" type="-+">Heden <rhyme label="f" type="m">met</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Als eenige <rhyme label="a" type="f">vyanden</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Van Godt, en 't Roomsch <rhyme label="b" type="m">geloof</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Haer Clooster wreedt <rhyme label="a" type="f" corresp="#s7:l1">aenranden</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Sy soecken hier een <rhyme label="b" type="m" corresp="#s7:l2">roof</rhyme>:</l>
        <l id="s7:l5" met="3" type="-+">Uyt d'hemel hoort: <rhyme label="c" type="f">bewaren</rhyme></l>
        <l id="s7:l6" met="2" type="-+">'k Sal uw' tot 't <rhyme label="d" type="m">endt</rhyme>.</l>
        <l id="s7:l7" met="3" type="-+">Clara verdrijft, dees <rhyme label="c" type="f" corresp="#s7:l5">scharen</rhyme></l>
        <l id="s7:l8" met="2" type="-+">Door 't <rhyme label="d" type="m" corresp="#s7:l6">Sacrament</rhyme>.</l>
        <l id="s7:l9" met="4" type="-+">Laet ons <rhyme label="e" type="f">met</rhyme></l>
        <l id="s7:l10" met="2" type="-+">Heden <rhyme label="f" type="m">met</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Maria, met haer <rhyme label="a" type="f">Soone</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Met eenen Maeghde <rhyme label="b" type="m">schaer</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Verciert met goude <rhyme label="a" type="f" corresp="#s8:l1">Croonen</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Vertoonen aen Sint <rhyme label="b" type="m" corresp="#s8:l2">Claer</rhyme>.</l>
        <l id="s8:l5" met="3" type="-+">Met vreught van d'aerde <rhyme label="c" type="f">scheyde</rhyme>,</l>
        <l id="s8:l6" met="2" type="-+">Met zoete <rhyme label="d" type="m">lof</rhyme></l>
        <l id="s8:l7" met="3" type="-+">Dit geselschap haer <rhyme label="c" type="f" corresp="#s8:l5">leyde</rhyme></l>
        <l id="s8:l8" met="2" type="-+">In 's hemels <rhyme label="d" type="m" corresp="#s8:l6">hof</rhyme>.</l>
        <l id="s8:l9" met="4" type="-+">Laet ons <rhyme label="e" type="f">met</rhyme></l>
        <l id="s8:l10" met="2" type="-+">Heden <rhyme label="f" type="m">met</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Wilt na de deughde <rhyme label="a" type="f">trachten</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Van Clara Godes <rhyme label="b" type="m">Maeght</rhyme>.</l>
        <l id="s9:l3" met="3" type="-+">Houdt Godt in uw' <rhyme label="a" type="f" corresp="#s9:l1">gedachten</rhyme>;</l>
        <l id="s9:l4" met="3" type="-+">Doet al dat Godt <rhyme label="b" type="m" corresp="#s9:l2">behaeght</rhyme>.</l>
        <l id="s9:l5" met="3" type="-+">Verlaet noyt Godes <rhyme label="c" type="f">paden</rhyme>,</l>
        <l id="s9:l6" met="2" type="-+">Noch <rhyme label="d" type="m">zuyverheydt</rhyme>;</l>
        <l id="s9:l7" met="3" type="-+">Sult vinden Goods <rhyme label="c" type="f" corresp="#s9:l5">genaden</rhyme></l>
        <l id="s9:l8" met="2" type="-+">Voor uw' <rhyme label="d" type="m" corresp="#s9:l6">bereydt</rhyme>.</l>
        <l id="s9:l9" met="4" type="-+">Laet ons <rhyme label="e" type="f">met</rhyme></l>
        <l id="s9:l10" met="2" type="-+">Heden <rhyme label="f" type="m">met</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Sint Clara, wilt <rhyme label="a" type="f">af-keere</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Door uw' gebedt van <rhyme label="b" type="m">my</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Al dat mijn ziel kan <rhyme label="a" type="f" corresp="#s10:l1">deere</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">En zuyverheydt daer <rhyme label="b" type="m" corresp="#s10:l2">by</rhyme>.</l>
        <l id="s10:l5" met="3" type="-+">Dat Christus mijn wil <rhyme label="c" type="f">geve</rhyme></l>
        <l id="s10:l6" met="2" type="-+">Sijn vlees en <rhyme label="d" type="m">bloedt</rhyme></l>
        <l id="s10:l7" met="3" type="-+">In 't eynde van mijn <rhyme label="c" type="f" corresp="#s10:l5">leven</rhyme>;</l>
        <l id="s10:l8" met="2" type="-+">En 's Hemels <rhyme label="d" type="m" corresp="#s10:l6">goedt</rhyme>.</l>
        <l id="s10:l9" met="4" type="-+">Laet ons <rhyme label="e" type="f">met</rhyme>.</l>
        <l id="s10:l10" met="2" type="-+">Heden <rhyme label="f" type="m">met</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

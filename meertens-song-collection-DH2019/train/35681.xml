    <melody>Als ik uit wandelen ga</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Albertus Buitendyck</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">NA Raphels ware <rhyme label="a" type="m">Leer</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Godts wercken doch <rhyme label="b" type="m">belijt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Verhaeltse tot sijn <rhyme label="a" type="m" corresp="#s1:l1">eer</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">'t Is eerlijck t'allen <rhyme label="b" type="m" corresp="#s1:l2">tijdt</rhyme>.</l>
        <l id="s1:l5" met="6" type="-+">Verhalen sullen wy, een wonder Godes <rhyme label="c" type="m">werck</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Waer door, waer door, waer <rhyme label="d" type="m">door</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Vermaert is onse <rhyme label="c" type="m" corresp="#s1:l5">Kerck</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Van Emerens <rhyme label="a" type="m">Gebeent</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Is by ons waert als <rhyme label="b" type="m">gout</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">En 't Beelt, van d' is <rhyme label="a" type="m" corresp="#s2:l1">gesteent</rhyme></l>
        <l id="s2:l4" met="3" type="-+">'t Is wonder, al ist <rhyme label="b" type="m" corresp="#s2:l2">Hout</rhyme>:</l>
        <l id="s2:l5" met="6" type="-+">Door Mirac'len van oudts, by 't Volck vermaert is <rhyme label="c" type="m">seer</rhyme>.</l>
        <l id="s2:l6" met="3" type="-+">Hoort dit, hoort dit, hoort <rhyme label="d" type="m">dit</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Tot Godts en haer beeldts <rhyme label="c" type="m" corresp="#s2:l5">eer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Pharos Dochter by <rhyme label="a" type="m">dagh</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Wandelt, Schriftuere <rhyme label="b" type="m">seydt</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">'t Bies-korfken drijven <rhyme label="a" type="m" corresp="#s3:l1">sagh</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En Moyses daer in <rhyme label="b" type="m" corresp="#s3:l2">leydt</rhyme>;</l>
        <l id="s3:l5" met="6" type="-+">Met vreught hem neemt, niet hout, geraeckt tot hooge <rhyme label="c" type="m">staet</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Hoort nu, hoort nu, hoort <rhyme label="d" type="m">nu</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Alsoo 't met haer Beeldt <rhyme label="c" type="m" corresp="#s3:l5">gaet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Voor Enchuysen in <rhyme label="a" type="m">Zee</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Gedreven heeft haer <rhyme label="b" type="m">Beelt</rhyme>.</l>
        <l id="s4:l3" met="3" type="-+">'t Volck maecken haer <rhyme label="a" type="m" corresp="#s4:l1">geree</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">'t Loopen haer niet <rhyme label="b" type="m" corresp="#s4:l2">verveelt</rhyme>.</l>
        <l id="s4:l5" met="6" type="-+">Met blijtschap krijgen sy 't, en stellent in een <rhyme label="c" type="m">Kerck</rhyme>:</l>
        <l id="s4:l6" met="3" type="-+">Let nu, let nu, let <rhyme label="d" type="m">nu</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Op't Godes wonder <rhyme label="c" type="m" corresp="#s4:l5">-werck</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Daer na, sy gaen nae 't <rhyme label="a" type="m">Beeldt</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">'t Was wegh, 't lagh weer in <rhyme label="b" type="m">Zee</rhyme>.</l>
        <l id="s5:l3" met="3" type="-+">Venhuysers niet <rhyme label="a" type="m" corresp="#s5:l1">gezeelt</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Koomen na 't wonder <rhyme label="b" type="m" corresp="#s5:l2">mee</rhyme>:</l>
        <l id="s5:l5" met="6" type="-+">Sy sien Emerens beelt, drijven voor dese <rhyme label="c" type="m">Stadt</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Haer hart, haer hart, haer <rhyme label="d" type="m">hart</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Vlamt seer op dese <rhyme label="c" type="m" corresp="#s5:l5">Schat</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Uyt Zee krijgen 't met <rhyme label="a" type="m">vreught</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Lovende gaen Godts <rhyme label="b" type="m">werck</rhyme>.</l>
        <l id="s6:l3" met="3" type="-+">En met seer groot <rhyme label="a" type="m" corresp="#s6:l1">geneught</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Brengen 't in hare <rhyme label="b" type="m" corresp="#s6:l2">Kerck</rhyme>:</l>
        <l id="s6:l5" met="6" type="-+">Alwaer 't gebleven is, en noch bewaert wort <rhyme label="c" type="m">trouw</rhyme>.</l>
        <l id="s6:l6" met="3" type="-+">Looft Godt, looft Godt, looft <rhyme label="d" type="m">Godt</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Hierom, ghy Man en <rhyme label="c" type="m" corresp="#s6:l5">Vrouw</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">En daeghs na <rhyme label="a" type="m">Pincxter-dagh</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Met Beelt liep menigh <rhyme label="b" type="m">Mensch</rhyme>:</l>
        <l id="s7:l3" met="3" type="-+">Noch dan men 't volck sien <rhyme label="a" type="m" corresp="#s7:l1">magh</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Niet als doe, na ons <rhyme label="b" type="m" corresp="#s7:l2">wensch</rhyme>.</l>
        <l id="s7:l5" met="6" type="-+">Viert en eert dese Dagh, met een devoot goet <rhyme label="c" type="m">hart</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">En schout, en schout, en <rhyme label="d" type="m">schout</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Satans Feest, tot sijn <rhyme label="c" type="m" corresp="#s7:l5">smart</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Op die Dagh tot <rhyme label="a" type="m">verdriet</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Rijdt nu het volck als <rhyme label="b" type="m">mal</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Veel men oock loopen <rhyme label="a" type="m" corresp="#s8:l1">siet</rhyme>:</l>
        <l id="s8:l4" met="3" type="-+">Dan beurt veel sonden <rhyme label="b" type="m" corresp="#s8:l2">val</rhyme>.</l>
        <l id="s8:l5" met="6" type="-+">Soo wort nu alles Reformeert, goet in het <rhyme label="c" type="m">quaedt</rhyme>.</l>
        <l id="s8:l6" met="3" type="-+">Haet dit, haet dit, haet <rhyme label="d" type="m">dit</rhyme></l>
        <l id="s8:l7" met="3" type="-+">Oprecht en metter <rhyme label="c" type="m" corresp="#s8:l5">daet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">'t Beeldt tot u lof, Ã´ <rhyme label="a" type="m">Heer</rhyme>!</l>
        <l id="s9:l2" met="3" type="-+">Gestelt is in een <rhyme label="b" type="m">kas</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Oock tot Emerens <rhyme label="a" type="m" corresp="#s9:l1">eer</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Al worden wy tot <rhyme label="b" type="m" corresp="#s9:l2">as</rhyme>:</l>
        <l id="s9:l5" met="6" type="-+">Om dat d'ontfangenis des Beelts noyt en <rhyme label="c" type="m">verdooft</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Want u, want u, want <rhyme label="d" type="m">u</rhyme></l>
        <l id="s9:l7" met="3" type="-+">En haer daer door men <rhyme label="c" type="m" corresp="#s9:l5">looft</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Boven haer s' Eng'len <rhyme label="a" type="m">heeft</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Met Lely, en <rhyme label="b" type="m">Palm-tack</rhyme>;</l>
        <l id="s10:l3" met="3" type="-+">Dit ons te kennen <rhyme label="a" type="m" corresp="#s10:l1">geeft</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Dat sy niet met <rhyme label="b" type="m" corresp="#s10:l2">gemack</rhyme></l>
        <l id="s10:l5" met="6" type="-+">Gheraeckt is aen haer twee kroonen, in 's Hemels <rhyme label="c" type="m">Throon</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Want sy, want sy, want <rhyme label="d" type="m">sy</rhyme></l>
        <l id="s10:l7" met="3" type="-+">Steenen stellen te <rhyme label="c" type="m" corresp="#s10:l5">thoon</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">De Lely schoon en <rhyme label="a" type="m">wit</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Heeft een Engel in <rhyme label="b" type="m">d'handt</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">d'Ander leyt, niet en <rhyme label="a" type="m" corresp="#s11:l1">sit</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Met een Palm-tack seer <rhyme label="b" type="m" corresp="#s11:l2">kant</rhyme>.</l>
        <l id="s11:l5" met="6" type="-+">Want haer martiry wort met de Palm-tack <rhyme label="c" type="m">vereert</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Maer haer, maer haer, maer <rhyme label="d" type="m">haer</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">Reynheyt de Lely <rhyme label="c" type="m" corresp="#s11:l5">leert</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Wy vallen u te <rhyme label="a" type="m">voet</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Patroners van dees <rhyme label="b" type="m">Kerck</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">En smeecken met <rhyme label="a" type="m" corresp="#s12:l1">ootmoet</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Die hier zijn Leeck, en <rhyme label="b" type="m" corresp="#s12:l2">Klerck</rhyme>:</l>
        <l id="s12:l5" met="6" type="-+">Door uw' gebeent en beeldt, helpt ons in onse <rhyme label="c" type="m">noot</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Daer by, daer by, daer <rhyme label="d" type="m">by</rhyme></l>
        <l id="s12:l7" met="3" type="-+">In d'uyr van onse <rhyme label="c" type="m" corresp="#s12:l5">doodt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

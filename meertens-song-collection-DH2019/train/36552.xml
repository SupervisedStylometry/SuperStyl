    <melody>Hoe Tobias zijn zoon leerde</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Fran√ßois Foret</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Een goed zalig <rhyme label="a" type="m">vermaen</rhyme></l>
        <l id="s1:l2" met="2" type="-+">Voor <rhyme label="b" type="f">d'ongeleerde</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Hoe Tobias wys <rhyme label="a" type="m" corresp="#s1:l1">beraen</rhyme></l>
        <l id="s1:l4" met="2" type="-+">Zyn zone <rhyme label="b" type="f" corresp="#s1:l2">leerde</rhyme>:</l>
        <l id="s1:l5" met="2" type="-+">Hy sprak <rhyme label="c" type="f">ydoone</rhyme> //</l>
        <l id="s1:l6" met="2" type="-+">Myn liefsten <rhyme label="c" type="f" corresp="#s1:l5">zone</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">In den grond uws herten <rhyme label="d" type="m">prent</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Voor een vast <rhyme label="d" type="m" corresp="#s1:l7">fondament</rhyme></l>
        <l id="s1:l9" met="2" type="-+">Myn' woorden <rhyme label="c" type="f" corresp="#s1:l5">schoone</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Als God myn' ziele <rhyme label="a" type="m">haelt</rhyme></l>
        <l id="s2:l2" met="2" type="-+">In zynder <rhyme label="b" type="f">haeven</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Myn lichaem <rhyme label="a" type="m" corresp="#s2:l1">ongefaeld</rhyme></l>
        <l id="s2:l4" met="2" type="-+">Zult gy <rhyme label="b" type="f" corresp="#s2:l2">begraven</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Wilt u doch <rhyme label="c" type="f">keeren</rhyme> //</l>
        <l id="s2:l6" met="2" type="-+">tot deugd <rhyme label="c" type="f" corresp="#s2:l5">vermeeren</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Al uw leven dagen <rhyme label="d" type="m">lank</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Houd uw' Moeder vry en <rhyme label="d" type="m" corresp="#s2:l7">vrank</rhyme></l>
        <l id="s2:l9" met="2" type="-+">Altyd in <rhyme label="c" type="f" corresp="#s2:l5">eeren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Hoe menig p'rykel <rhyme label="a" type="m">vreed</rhyme></l>
        <l id="s3:l2" met="2" type="-+">Heeft zy <rhyme label="b" type="f">verkregen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">In haer lichaem groot <rhyme label="a" type="m" corresp="#s3:l1">leed</rhyme></l>
        <l id="s3:l4" met="2" type="-+">Voor u <rhyme label="b" type="f" corresp="#s3:l2">gedregen</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Wilt hier op <rhyme label="c" type="f">merken</rhyme> //</l>
        <l id="s3:l6" met="2" type="-+">In all' uw' <rhyme label="c" type="f" corresp="#s3:l5">werken</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">En 't eynde haers levens <rhyme label="d" type="m">vry</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Begraeft-ze ook nevens <rhyme label="d" type="m" corresp="#s3:l7">my</rhyme></l>
        <l id="s3:l9" met="2" type="-+">Tot een <rhyme label="c" type="f" corresp="#s3:l5">versterken</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Houd God tot alle <rhyme label="a" type="m">tyden</rhyme></l>
        <l id="s4:l2" met="2" type="-+">In uw' <rhyme label="b" type="f">gedachten</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">En wilt de zonden <rhyme label="a" type="m" corresp="#s4:l1">vlien</rhyme></l>
        <l id="s4:l4" met="2" type="-+">Met all' uw' <rhyme label="b" type="f" corresp="#s4:l2">magten</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Laet zonder <rhyme label="c" type="f">wyken</rhyme> //</l>
        <l id="s4:l6" met="2" type="-+">Aelmoessen <rhyme label="c" type="f" corresp="#s4:l5">blyken</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">En keert u van den armen <rhyme label="d" type="m">niet</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Zoo zal des Heeren aenschyn <rhyme label="d" type="m" corresp="#s4:l7">ziet</rhyme>,</l>
        <l id="s4:l9" met="2" type="-+">Van u noyt <rhyme label="c" type="f" corresp="#s4:l5">wyken</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Keert u altyd tot <rhyme label="a" type="m">deugd</rhyme>,</l>
        <l id="s5:l2" met="2" type="-+">Met herten <rhyme label="b" type="f">spoedig</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">En is 't dat gy ied <rhyme label="a" type="m" corresp="#s5:l1">vermeugt</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">Geeft <rhyme label="b" type="f" corresp="#s5:l2">overvloedig</rhyme>:</l>
        <l id="s5:l5" met="2" type="-+">Hebt gy ook <rhyme label="c" type="f">weynig</rhyme> //</l>
        <l id="s5:l6" met="2" type="-+">zijt niet <rhyme label="c" type="f" corresp="#s5:l5">vileynig</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Gy vergaert voor u een <rhyme label="d" type="m">schat</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Een grooten loon, en <rhyme label="d" type="m" corresp="#s5:l7">dat</rhyme></l>
        <l id="s5:l9" met="2" type="-+">Hier-naermaels <rhyme label="c" type="f" corresp="#s5:l5">certeynig</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Wacht u van <rhyme label="a" type="m">hoerdery</rhyme>,</l>
        <l id="s6:l2" met="2" type="-+">Bemint uw' <rhyme label="b" type="f">huysvrouwe</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Op dat u niet <rhyme label="a" type="m" corresp="#s6:l1">geschey</rhyme></l>
        <l id="s6:l4" met="2" type="-+">Eenig' <rhyme label="b" type="f" corresp="#s6:l2">ontrouwe</rhyme>:</l>
        <l id="s6:l5" met="2" type="-+">Wilt zonden <rhyme label="c" type="f">grouwen</rhyme>,</l>
        <l id="s6:l6" met="2" type="-+">Hooveirdy <rhyme label="c" type="f" corresp="#s6:l5">schouwen</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Die bederffenisse <rhyme label="d" type="m">meest</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Is daer uyt gekomen <rhyme label="d" type="m" corresp="#s6:l7">eerst</rhyme>,</l>
        <l id="s6:l9" met="2" type="-+">Wilt dit <rhyme label="c" type="f" corresp="#s6:l5">onthouwen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Als imand voor u <rhyme label="a" type="m">werkt</rhyme>,</l>
        <l id="s7:l2" met="2" type="-+">Hoort myn <rhyme label="b" type="f">verhaelen</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Zoo zult gy (hier op <rhyme label="a" type="m" corresp="#s7:l1">merkt</rhyme>)</l>
        <l id="s7:l4" met="2" type="-+">Den loon <rhyme label="b" type="f" corresp="#s7:l2">betaelen</rhyme>,</l>
        <l id="s7:l5" met="2" type="-+">Des werklieden <rhyme label="c" type="f">hueren</rhyme> //</l>
        <l id="s7:l6" met="2" type="-+">geeft zonder <rhyme label="c" type="f" corresp="#s7:l5">treuren</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Doet een ander zeer <rhyme label="d" type="m">mild</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Zoo gy zelve hebben <rhyme label="d" type="m" corresp="#s7:l7">wilt</rhyme>,</l>
        <l id="s7:l9" met="2" type="-+">Tot aller <rhyme label="c" type="f" corresp="#s7:l5">uren</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Den hongerigen ook <rhyme label="a" type="m">bied</rhyme></l>
        <l id="s8:l2" met="2" type="-+">Uw brood te <rhyme label="b" type="f">eten</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">En ook den naekten <rhyme label="a" type="m" corresp="#s8:l1">niet</rhyme></l>
        <l id="s8:l4" met="2" type="-+">En wilt <rhyme label="b" type="f" corresp="#s8:l2">vergeten</rhyme>:</l>
        <l id="s8:l5" met="2" type="-+">Wyn en Brood <rhyme label="c" type="f">mede</rhyme></l>
        <l id="s8:l6" met="2" type="-+">Gebruykt met <rhyme label="c" type="f" corresp="#s8:l5">vrede</rhyme>;</l>
        <l id="s8:l7" met="3" type="-+">Gy ook niet eten en <rhyme label="d" type="m">zult</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Met den zondaer <rhyme label="d" type="m" corresp="#s8:l7">vervuld</rhyme></l>
        <l id="s8:l9" met="2" type="-+">Al met <rhyme label="c" type="f" corresp="#s8:l5">boosheden</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Begeirt en zoekt <rhyme label="a" type="m">altyd</rhyme></l>
        <l id="s9:l2" met="2" type="-+">Raed van den <rhyme label="b" type="f">wyzen</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">God <rhyme label="a" type="m" corresp="#s9:l1">gebenedyd</rhyme>,</l>
        <l id="s9:l4" met="2" type="-+">Niet om <rhyme label="b" type="f" corresp="#s9:l2">volpryzen</rhyme>:</l>
        <l id="s9:l5" met="2" type="-+">Vreest hem uyt <rhyme label="c" type="f">minnen</rhyme>,</l>
        <l id="s9:l6" met="2" type="-+">Met all' uw' <rhyme label="c" type="f" corresp="#s9:l5">zinnen</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">En bid dat hy u <rhyme label="d" type="m">bystaet</rhyme></l>
        <l id="s9:l8" met="3" type="-+">En laet vry al uw <rhyme label="d" type="m" corresp="#s9:l7">raed</rhyme></l>
        <l id="s9:l9" met="2" type="-+">In hem <rhyme label="c" type="f" corresp="#s9:l5">beginnen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">En vreest niet zone <rhyme label="a" type="m">myn</rhyme>,</l>
        <l id="s10:l2" met="2" type="-+">'s Weireldsch <rhyme label="b" type="f">quellagie</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Al doen wy met <rhyme label="a" type="m" corresp="#s10:l1">gepyn</rhyme></l>
        <l id="s10:l4" met="2" type="-+">Ons <rhyme label="b" type="f" corresp="#s10:l2">pelgrimagie</rhyme>,</l>
        <l id="s10:l5" met="2" type="-+">Als wy ons <rhyme label="c" type="f">geven</rhyme></l>
        <l id="s10:l6" met="2" type="-+">Tot 's deugds <rhyme label="c" type="f" corresp="#s10:l5">aenkleven</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">En van zonden <rhyme label="d" type="m">scheen</rhyme>,</l>
        <l id="s10:l8" met="3" type="-+">Veel goeds zal ons God <rhyme label="d" type="m" corresp="#s10:l7">bereen</rhyme></l>
        <l id="s10:l9" met="2" type="-+">In 't eeuwig <rhyme label="c" type="f" corresp="#s10:l5">leven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

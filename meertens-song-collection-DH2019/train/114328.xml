  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Vyt vercoren <rhyme label="a" type="m">vat</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Dat Christvs heel <rhyme label="a" type="m" corresp="#s1:l1">besat</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Dat sijnen naem, nae' sijn <rhyme label="b" type="f">behaghen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Het Heydens volk voor hebt <rhyme label="b" type="f" corresp="#s1:l3">ghedraghen</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Comt my te hulp van 's hemels <rhyme label="c" type="m">hof</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Dat ick magh singhen uwen <rhyme label="c" type="m" corresp="#s1:l5">lof</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">U hert door stercken <rhyme label="a" type="m">brandt</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Aen Iesvm was <rhyme label="a" type="m" corresp="#s2:l1">verpandt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Die m' in u sagh alleen seer <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Gheheel tot hem hooch op <rhyme label="b" type="f" corresp="#s2:l3">gheheven</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Op hem stont allen u <rhyme label="c" type="m">ghedacht</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Naer hem stont alle 's herten <rhyme label="c" type="m" corresp="#s2:l5">cracht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Altijt onsteken <rhyme label="a" type="m">wert</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Van zielen iever 't <rhyme label="a" type="m" corresp="#s3:l1">hert</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Die 't nacht en dach gheheel <rhyme label="b" type="f">verslonde</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Gheduerich al te seer <rhyme label="b" type="f" corresp="#s3:l3">doorwonde</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Als ghy vercranckt saeght oft in <rhyme label="c" type="m">noodt</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Oft loopen zielen nae hun <rhyme label="c" type="m" corresp="#s3:l5">doodt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ghy waert door liefde <rhyme label="a" type="m">hier</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Als een gheweldich <rhyme label="a" type="m" corresp="#s4:l1">vier</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Dat door den bosch 't hout gaet <rhyme label="b" type="f">verslinden</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Loopt altijt voorts, als 't hout kan <rhyme label="b" type="f" corresp="#s4:l3">vinden</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Alsoo u liefde al te <rhyme label="c" type="m">groot</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Onstack 'et al kleyn ende <rhyme label="c" type="m" corresp="#s4:l5">groot</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Hoe menich Heydens <rhyme label="a" type="m">landt</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Is door u vier <rhyme label="a" type="m" corresp="#s5:l1">verbrandt</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Hoe menich vier, dat quam t' <rhyme label="b" type="f">ontbreken</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Is door u vlam wed'rom <rhyme label="b" type="f" corresp="#s5:l3">ontsteken</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">En waer ghy vondt een vierich <rhyme label="c" type="m">hert</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Door u dat heel gheloeient <rhyme label="c" type="m" corresp="#s5:l5">wert</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Hoe was u hert <rhyme label="a" type="m">verbreyt</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Tot alle cruys <rhyme label="a" type="m" corresp="#s6:l1">beryet</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Die ghy met vreucht all' hebt <rhyme label="b" type="f">ontfanghen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Soo dickwils om den Heer <rhyme label="b" type="f" corresp="#s6:l3">ghevanghen</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Gheslaghen dickwils boven <rhyme label="c" type="m">maet</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Uyt wreeder Joden grooten <rhyme label="c" type="m" corresp="#s6:l5">haet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Wie sal u cruycen <rhyme label="a" type="m">al</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">U moeten sonder <rhyme label="a" type="m" corresp="#s7:l1">tal</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">All' u ghevaren ooc <rhyme label="b" type="f">vermellen</rhyme>?</l>
        <l id="s7:l4" met="4" type="-+">Allenden en doodts nooden <rhyme label="b" type="f" corresp="#s7:l3">tellen</rhyme>?</l>
        <l id="s7:l5" met="4" type="-+">Ter zee hebt ghy dry maels, <rhyme label="c" type="m">verrast</rhyme></l>
        <l id="s7:l6" met="4" type="-+">Van herden storm, gheleden <rhyme label="c" type="m" corresp="#s7:l5">last</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">In't diepste dach en <rhyme label="a" type="m">nacht</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Gheweest zijd' <rhyme label="a" type="m" corresp="#s8:l1">onversmacht</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Naer hongher, dorst, naer langhe <rhyme label="b" type="f">waecken</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Naer kouw' en naecktheyt sagh m' u <rhyme label="b" type="f" corresp="#s8:l3">haecken</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Nae meer allenden snacken <rhyme label="c" type="m">hier</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Te kleyn was 't al voor u groot <rhyme label="c" type="m" corresp="#s8:l5">vier</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">'t Sweert was u een <rhyme label="a" type="m">ghenucht</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Dat u oock heeft de <rhyme label="a" type="m" corresp="#s9:l1">vrucht</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Van uwen arbeyt doen <rhyme label="b" type="f">ghenieten</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Die 't u hier noot en liet <rhyme label="b" type="f" corresp="#s9:l3">verdrieten</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Nu is u deucht, u moet <rhyme label="c" type="m">gheloont</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Nu is u lyden hooch <rhyme label="c" type="m" corresp="#s9:l5">ghecroont</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">O onverwonnen <rhyme label="a" type="m">helt</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Die teghen 't helsch <rhyme label="a" type="m" corresp="#s10:l1">ghewelt</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Soo goeden strijdt hier hebt <rhyme label="b" type="f">ghestreden</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">U oogh op ons eens slaet <rhyme label="b" type="f" corresp="#s10:l3">beneden</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Verwerft ons hulp in onsen <rhyme label="c" type="m">strijdt</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Dat wy met u eens zijn <rhyme label="c" type="m" corresp="#s10:l5">verblijdt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

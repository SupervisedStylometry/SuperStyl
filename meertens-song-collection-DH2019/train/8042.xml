  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">ALsmen <rhyme label="a" type="m">vergaet</rhyme></l>
        <l id="s1:l2" met="3" type="-+">daer vreuchde schijnt voor <rhyme label="b" type="f">handen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Soo scheyt het herte <rhyme label="c" type="m">lust</rhyme>.</l>
        <l id="s1:l4" met="2" type="-+">En alsmen <rhyme label="a" type="m" corresp="#s1:l1">paert</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Door kracht van liefdes <rhyme label="b" type="f" corresp="#s1:l2">banden</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Soo ist gemoet <rhyme label="c" type="m" corresp="#s1:l3">gerust</rhyme>:</l>
        <l id="s1:l7" met="2" type="-+">Maer 'twerdt <rhyme label="c" type="m" corresp="#s1:l3">gheblust</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Al het vreuchdigh <rhyme label="d" type="f">vermaecken</rhyme>,</l>
        <l id="s1:l9" met="4" type="+-">En de sinnen druckigh <rhyme label="b" type="f" corresp="#s1:l2">branden</rhyme>,</l>
        <l id="s1:l10" met="3" type="+-">Als 'tscheyden komt <rhyme label="d" type="f" corresp="#s1:l8">naecken</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Gheen vreucht soo <rhyme label="a" type="m">groot</rhyme></l>
        <l id="s2:l2" met="3" type="-+">En isser hier op <rhyme label="b" type="f">aerden</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Daermen op bouwen <rhyme label="c" type="m">kan</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">Met nauwer <rhyme label="a" type="m" corresp="#s2:l1">noot</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Sietmen hier yet <rhyme label="b" type="f" corresp="#s2:l2">aenvaerden</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Of men moet haest daer <rhyme label="c" type="m" corresp="#s2:l3">van</rhyme>:</l>
        <l id="s2:l7" met="2" type="-+">Dat strack <rhyme label="c" type="m" corresp="#s2:l3">began</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Ist haestigh weer ten <rhyme label="d" type="f">enden</rhyme>,</l>
        <l id="s2:l9" met="4" type="+-">Niet en blijft bu eender <rhyme label="b" type="f" corresp="#s2:l2">waerden</rhyme></l>
        <l id="s2:l10" met="3" type="+-">Maer al sietmen't <rhyme label="d" type="f" corresp="#s2:l8">wenden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Wy zijn by <rhyme label="a" type="m">een</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Wy moeten haest weer <rhyme label="b" type="f">scheyden</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">En kiesen elck sijn <rhyme label="c" type="m">padt</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">'Twaer oock gheen <rhyme label="a" type="m" corresp="#s3:l1">reen</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Dat wy hier stadigh <rhyme label="b" type="f" corresp="#s3:l2">beyden</rhyme>:</l>
        <l id="s3:l6" met="3" type="-+">Want elck wordt moe en <rhyme label="c" type="m" corresp="#s3:l3">mat</rhyme>:</l>
        <l id="s3:l7" met="2" type="-+">Maer ick wensch <rhyme label="c" type="m" corresp="#s3:l3">dat</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Wy t'saem mochten <rhyme label="d" type="f">vergaren</rhyme></l>
        <l id="s3:l9" met="4" type="+-">In s'Heeren lieflijcke <rhyme label="b" type="f" corresp="#s3:l2">weyden</rhyme>,</l>
        <l id="s3:l10" met="3" type="+-">Daer Hoop Troost doet <rhyme label="d" type="f" corresp="#s3:l8">baren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Want of wy <rhyme label="a" type="m">al</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Ons selschap hier <rhyme label="b" type="f">verlaten</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Als hoop ons weer gheeft <rhyme label="c" type="m">moet</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">Datmen nae <rhyme label="a" type="m" corresp="#s4:l1">sal</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Weder tot onser <rhyme label="b" type="f" corresp="#s4:l2">baten</rhyme></l>
        <l id="s4:l6" met="3" type="-+">By een vergaren <rhyme label="c" type="m" corresp="#s4:l3">goet</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">Soo is <rhyme label="c" type="m" corresp="#s4:l3">gheboet</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Al onse scheyden <rhyme label="d" type="f">druckigh</rhyme>:</l>
        <l id="s4:l9" met="4" type="+-">Want met vreuchden boven <rhyme label="b" type="f" corresp="#s4:l2">maten</rhyme></l>
        <l id="s4:l10" met="3" type="+-">Scheytmen dan <rhyme label="d" type="f" corresp="#s4:l8">gheluckigh</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Och of <rhyme label="a" type="m">alhier</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Ons scheyden mocht <rhyme label="b" type="f">geschieden</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Van Vleesch, Werelt en <rhyme label="c" type="m">Sondt</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">En dat wy <rhyme label="a" type="m" corresp="#s5:l1">schier</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Als de vrome <rhyme label="b" type="f" corresp="#s5:l2">Krijghslieden</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Al uyt ons herten <rhyme label="c" type="m" corresp="#s5:l3">grondt</rhyme>.</l>
        <l id="s5:l7" met="2" type="-+">Tra'en in 't <rhyme label="c" type="m" corresp="#s5:l3">verbondt</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Met die Godt hert'lijck <rhyme label="d" type="f">minnen</rhyme>:</l>
        <l id="s5:l9" met="4" type="+-">En Christo ons trouwe <rhyme label="b" type="f" corresp="#s5:l2">bieden</rhyme>,</l>
        <l id="s5:l10" met="3" type="+-">Om zijn gunst te <rhyme label="d" type="f" corresp="#s5:l8">winnen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Soo mochten <rhyme label="a" type="m">wy</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Hier na by een <rhyme label="b" type="f">versamen</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">daer geen scheyden werdt <rhyme label="c" type="m">meer</rhyme>,</l>
        <l id="s6:l4" met="2" type="-+">Vrolijck en <rhyme label="a" type="m" corresp="#s6:l1">bly</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Bevrijdt van alle <rhyme label="b" type="f" corresp="#s6:l2">blamen</rhyme></l>
        <l id="s6:l6" met="3" type="-+">door Christum onsen <rhyme label="c" type="m" corresp="#s6:l3">Heer</rhyme>:</l>
        <l id="s6:l7" met="2" type="-+">'Tis zijn <rhyme label="c" type="m" corresp="#s6:l3">begheer</rhyme></l>
        <l id="s6:l8" met="3" type="-+">dat wy al hier na <rhyme label="d" type="f">streven</rhyme>,</l>
        <l id="s6:l9" met="4" type="+-">En spreecken van herten <rhyme label="b" type="f" corresp="#s6:l2">Amen</rhyme>:</l>
        <l id="s6:l10" met="3" type="+-">Heer, wilt het soo <rhyme label="d" type="f" corresp="#s6:l8">geven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

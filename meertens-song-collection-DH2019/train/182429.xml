    <melody>Gezwinde bode van de min</melody>
  <author>Tannetge Kornelis Blok</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Iuygt nu Zions reyne <rhyme label="a" type="m">schaer</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">Maekt een bly <rhyme label="b" type="m">gezank</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Looft den Heer in ‘t <rhyme label="a" type="m" corresp="#s1:l1">openbaer</rhyme>:</l>
        <l id="s1:l4" met="3" type="+-">Geeft hem lof en <rhyme label="b" type="m" corresp="#s1:l2">dank</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Heft u stem op met <rhyme label="c" type="m">vlijd</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">En looft hem nu ter <rhyme label="c" type="m" corresp="#s1:l5">tyd</rhyme>,</l>
        <l id="s1:l7" met="1" type="-+">Met <rhyme label="d" type="m">vreugt</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Wie zou niet zijn <rhyme label="d" type="m" corresp="#s1:l7">verheugt</rhyme>,</l>
        <l id="s1:l9" met="3" type="+-">Maekt geen droef <rhyme label="e" type="m">geklag</rhyme>,</l>
        <l id="s1:l10" met="3" type="+-">‘t Is te blyden <rhyme label="e" type="m" corresp="#s1:l9">dag</rhyme>,</l>
        <l id="s1:l11" met="3" type="+-">Hier dient niet <rhyme label="f" type="m">getreurd</rhyme>,</l>
        <l id="s1:l12" met="4" type="+-">Nu ons zulken heyl’ge <rhyme label="f" type="m" corresp="#s1:l11">beurt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Nu dat Gods liefde <rhyme label="a" type="m">groot</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">Weer aen ons <rhyme label="b" type="m">bewijst</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En ons met het hemels <rhyme label="a" type="m" corresp="#s2:l1">Brood</rhyme></l>
        <l id="s2:l4" met="3" type="+-">Door zijn goedheid <rhyme label="b" type="m" corresp="#s2:l2">spijst</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">‘t Is een zaek die ons <rhyme label="c" type="m">al</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Tot vermaek dienen <rhyme label="c" type="m" corresp="#s2:l5">zal</rhyme></l>
        <l id="s2:l7" met="1" type="-+"><rhyme label="d" type="m">Voortaen</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Zoo wy ‘t waerdelijk <rhyme label="d" type="m" corresp="#s2:l7">ontfaen</rhyme>,</l>
        <l id="s2:l9" met="3" type="+-">‘t Is een liefde <rhyme label="e" type="m">pand</rhyme>,</l>
        <l id="s2:l10" met="3" type="+-">Van des Heeren <rhyme label="e" type="m" corresp="#s2:l9">hand</rhyme>,</l>
        <l id="s2:l11" met="3" type="+-">Vol van waerheids <rhyme label="f" type="m">schijn</rhyme>,</l>
        <l id="s2:l12" met="4" type="+-">Dat wy nu Godts eygen <rhyme label="f" type="m" corresp="#s2:l11">zijn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Neemt God ons voor zijn kind’ren <rhyme label="a" type="m">aen</rhyme></l>
        <l id="s3:l2" met="3" type="+-">Als hier heden <rhyme label="b" type="m">blijkt</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Wel wat zal ons dan <rhyme label="a" type="m" corresp="#s3:l1">tegenstaen</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">ons vyanden <rhyme label="b" type="m" corresp="#s3:l2">wijkt</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Geen hertzeer nog <rhyme label="c" type="m">verdriet</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Kunt gy meer ons doen <rhyme label="c" type="m" corresp="#s3:l5">ziet</rhyme>,</l>
        <l id="s3:l7" met="1" type="-+"><rhyme label="d" type="m">gewis</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Nu dat God ons Vader <rhyme label="d" type="m" corresp="#s3:l7">is</rhyme>,</l>
        <l id="s3:l9" met="3" type="+-">Desen hoogen <rhyme label="e" type="m">staet</rhyme>,</l>
        <l id="s3:l10" met="3" type="+-">veel te boven <rhyme label="e" type="m" corresp="#s3:l9">gaet</rhyme>,</l>
        <l id="s3:l11" met="3" type="+-">ons gering <rhyme label="f" type="m">verstand</rhyme>,</l>
        <l id="s3:l12" met="4" type="+-">dat zig God aen ons <rhyme label="f" type="m" corresp="#s3:l11">verpand</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Zegent dan dit heilig <rhyme label="a" type="m">werk</rhyme>,</l>
        <l id="s4:l2" met="3" type="+-">door u goedheid <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Maekt ons zwak geloove <rhyme label="a" type="m" corresp="#s4:l1">sterk</rhyme>,</l>
        <l id="s4:l4" met="3" type="+-">dat wy meer en <rhyme label="b" type="m" corresp="#s4:l2">meer</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">desen staet wel <rhyme label="c" type="m">insien</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">En het quaed mogen <rhyme label="c" type="m" corresp="#s4:l5">vlien</rhyme>,</l>
        <l id="s4:l7" met="1" type="-+">Al <rhyme label="d" type="m">wat</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">ons leid van dien engen <rhyme label="d" type="m" corresp="#s4:l7">vat</rhyme></l>
        <l id="s4:l9" met="3" type="+-">op dat wy o <rhyme label="e" type="m">God</rhyme>,</l>
        <l id="s4:l10" met="3" type="+-">komen niet tot <rhyme label="e" type="m" corresp="#s4:l9">spot</rhyme>,</l>
        <l id="s4:l11" met="3" type="+-">Door Zatans <rhyme label="f" type="m">fenijn</rhyme>,</l>
        <l id="s4:l12" met="4" type="+-">of des werelds loose <rhyme label="f" type="m" corresp="#s4:l11">schijn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Send ons uwen goeden <rhyme label="a" type="m">geest</rhyme>,</l>
        <l id="s5:l2" met="3" type="+-">Tot een <rhyme label="b" type="m">onderstand</rhyme></l>
        <l id="s5:l3" met="4" type="-+">op dat wy dan <rhyme label="a" type="m" corresp="#s5:l1">onbevreest</rhyme>:</l>
        <l id="s5:l4" met="3" type="+-">Mogen ons <rhyme label="b" type="m" corresp="#s5:l2">Vyand</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">In den strijd nu voor <rhyme label="c" type="m">taen</rhyme></l>
        <l id="s5:l6" met="3" type="-+">En altijd <rhyme label="c" type="m" corresp="#s5:l5">wederstaen</rhyme>,</l>
        <l id="s5:l7" met="1" type="-+">op <rhyme label="d" type="m">dat</rhyme></l>
        <l id="s5:l8" met="4" type="+-">Wy behouden onsen <rhyme label="d" type="m" corresp="#s5:l7">schat</rhyme>,</l>
        <l id="s5:l9" met="3" type="+-">ook niet traeg nog <rhyme label="e" type="m">moe</rhyme>,</l>
        <l id="s5:l10" met="3" type="+-">Werden in het <rhyme label="e" type="m" corresp="#s5:l9">goe</rhyme>,</l>
        <l id="s5:l11" met="3" type="+-">Loopen in den <rhyme label="f" type="m">strijt</rhyme>,</l>
        <l id="s5:l12" met="4" type="+-">Tot ons zielen <rhyme label="f" type="m" corresp="#s5:l11">profijt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ook zoo bidden wy ô <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s6:l2" met="3" type="+-">Dat gy van u <rhyme label="b" type="m">Kerk</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Weeren wild de valsche <rhyme label="a" type="m" corresp="#s6:l1">Leer</rhyme>,</l>
        <l id="s6:l4" met="3" type="+-">Ia een vast <rhyme label="b" type="m" corresp="#s6:l2">bolwerk</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Om haer zijn, dag en <rhyme label="c" type="m">nagt</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Toond zoo uw groote <rhyme label="c" type="m" corresp="#s6:l5">kragt</rhyme>,</l>
        <l id="s6:l7" met="1" type="-+">Aen <rhyme label="d" type="m">haer</rhyme>;</l>
        <l id="s6:l8" met="4" type="+-">Dat men werd te regt <rhyme label="d" type="m" corresp="#s6:l7">gewaer</rhyme>:</l>
        <l id="s6:l9" met="3" type="+-">Dat gy haer <rhyme label="e" type="m">bemind</rhyme>,</l>
        <l id="s6:l10" met="3" type="+-">Als u waerd <rhyme label="e" type="m" corresp="#s6:l9">kind</rhyme>,</l>
        <l id="s6:l11" met="3" type="+-">Ia haer tot een <rhyme label="f" type="m">loon</rhyme></l>
        <l id="s6:l12" met="4" type="+-">Geven wild des levens <rhyme label="f" type="m" corresp="#s6:l11">kroon</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

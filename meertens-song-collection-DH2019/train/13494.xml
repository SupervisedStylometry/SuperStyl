    <melody>Christe qui lux es et dies</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Tjaert Sonnema</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">GY, Christe, zyt dat licht en <rhyme label="a" type="m">dagh</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Voor U men niet verbergen <rhyme label="a" type="m" corresp="#s1:l1">magh</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Uw Vaderlike Licht geleid Ons op <rhyme label="b" type="m">den</rhyme></l>
        <l id="s1:l4" met="4" type="-+">wegh der <rhyme label="b" type="m" corresp="#s1:l3">Saligheid</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wy bidden Uw Godlike <rhyme label="a" type="m">kracht</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Behoed ons Heer in deese <rhyme label="a" type="m" corresp="#s2:l1">nacht</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En ons bewaer voor alle <rhyme label="b" type="m">quaed</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Dat ons aen lyf en ziele <rhyme label="b" type="m" corresp="#s2:l3">schaedt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Verdryf den swaeren slaep, Heer <rhyme label="a" type="m">Christ</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Dat ons niet schaed des vyands <rhyme label="a" type="m" corresp="#s3:l1">list</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Het vleesch in reine tuchten <rhyme label="b" type="m">zy</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">So zijn wy veeler sorgen <rhyme label="b" type="m" corresp="#s3:l3">vry</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">En schoon ons' ooghen slaepen <rhyme label="a" type="m">gaen</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Laet waeken 't hert en oopen <rhyme label="a" type="m" corresp="#s4:l1">staen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Bevry ons door Uw <rhyme label="b" type="m">rechter-hand</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Verlost ons van der sonden <rhyme label="b" type="m" corresp="#s4:l3">band</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Beschermer van de <rhyme label="a" type="m">Christenheid</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Uw hulp zy ons altoos <rhyme label="a" type="m" corresp="#s5:l1">bereidt</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Verlost ons, Heer, uit alle <rhyme label="b" type="m">nood</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Door 't lyden van Uw bitt're <rhyme label="b" type="m" corresp="#s5:l3">dood</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Gedenk ook op den swaeren <rhyme label="a" type="m">tyd</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Als onse lichaem valt in <rhyme label="a" type="m" corresp="#s6:l1">stryd</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">De ziel, die Gy hebt van de <rhyme label="b" type="m">pyn</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Bevrydt, laet die getrooftet <rhyme label="b" type="m" corresp="#s6:l3">zijn</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Den Vader in den hoogen <rhyme label="a" type="m">throon</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Zy lof en eer, en ook den <rhyme label="a" type="m" corresp="#s7:l1">Soon</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Den Heil'ge Geest zy dank <rhyme label="b" type="m">geseit</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Van nu tot in der <rhyme label="b" type="m" corresp="#s7:l3">eeuwigheid</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

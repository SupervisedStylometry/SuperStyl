  <author>Leenaert Clock</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">Liefste <rhyme label="a" type="m">bemint</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Van Godt nu <rhyme label="b" type="f">uytvercoren</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">Voor sijn lief <rhyme label="a" type="m" corresp="#s1:l1">Kindt</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Van boven nieu <rhyme label="b" type="f" corresp="#s1:l2">gheboren</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Ghy hebt met <rhyme label="c" type="m">vreucht</rhyme></l>
        <l id="s1:l6" met="3" type="-+">T’samen ons hert <rhyme label="c" type="m" corresp="#s1:l5">verheucht</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Door lieffelijcke <rhyme label="d" type="f">sanghen</rhyme></l>
        <l id="s1:l8" met="2" type="-+">Wilt oock in <rhyme label="c" type="m" corresp="#s1:l5">deucht</rhyme></l>
        <l id="s1:l9" met="3" type="-+">Dit Liedt van my <rhyme label="d" type="f" corresp="#s1:l7">ontfanghen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">V doch <rhyme label="a" type="m">verblijt</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Om in het huys des <rhyme label="b" type="f">Heeren</rhyme></l>
        <l id="s2:l3" met="2" type="-+">Te gaen <rhyme label="a" type="m" corresp="#s2:l1">subijt</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Om sijn lof te <rhyme label="b" type="f" corresp="#s2:l2">vermeeren</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">T’is s’Hemels <rhyme label="c" type="m">Rijck</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Laet ons stellen <rhyme label="c" type="m" corresp="#s2:l5">ghelijck</rhyme></l>
        <l id="s2:l7" met="3" type="-+">In sijn poorten ons <rhyme label="d" type="f">voeten</rhyme></l>
        <l id="s2:l8" met="2" type="-+">Sonder <rhyme label="c" type="m" corresp="#s2:l5">beswijck</rhyme></l>
        <l id="s2:l9" met="3" type="-+">Wy dat vast hopen <rhyme label="d" type="f" corresp="#s2:l7">moeten</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Constich <rhyme label="a" type="m">ghebout</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Is dese Stadt vol <rhyme label="b" type="f">vreden</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Men <rhyme label="a" type="m" corresp="#s3:l1">onderhout</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Daer al Hemelsche <rhyme label="b" type="f" corresp="#s3:l2">zeden</rhyme></l>
        <l id="s3:l5" met="2" type="-+">Godt daer <rhyme label="c" type="m">regeert</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En hy wordt oock <rhyme label="c" type="m" corresp="#s3:l5">gheeert</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Van sijn hemelsche <rhyme label="d" type="f">scharen</rhyme></l>
        <l id="s3:l8" met="2" type="-+">Stadich <rhyme label="c" type="m" corresp="#s3:l5">begeert</rhyme></l>
        <l id="s3:l9" met="3" type="-+">Daer by oock te <rhyme label="d" type="f" corresp="#s3:l7">vergaren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">In u <rhyme label="a" type="m">ghemoet</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Climt op seer wel <rhyme label="b" type="f">beraden</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">Veel deuchden <rhyme label="a" type="m" corresp="#s4:l1">goet</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Zijn die trappen en <rhyme label="b" type="f" corresp="#s4:l2">graden</rhyme></l>
        <l id="s4:l5" met="2" type="-+">Om Gods <rhyme label="c" type="m">goetheyt</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Sijn groote <rhyme label="c" type="m" corresp="#s4:l5">Majesteyt</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Danckelijck te <rhyme label="d" type="f">belijden</rhyme>,</l>
        <l id="s4:l8" met="2" type="-+">Hier toe <rhyme label="c" type="m" corresp="#s4:l5">bereyt</rhyme></l>
        <l id="s4:l9" met="3" type="-+">Wilt zijn tiot allen <rhyme label="d" type="f" corresp="#s4:l7">tijden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Anders <rhyme label="a" type="m">bedacht</rhyme></l>
        <l id="s5:l2" met="3" type="-+">En mach tot hem <rhyme label="b" type="f">ghenaken</rhyme>,</l>
        <l id="s5:l3" met="2" type="-+">Dan sijn <rhyme label="a" type="m" corresp="#s5:l1">gheslacht</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Als ghetuyghen der <rhyme label="b" type="f" corresp="#s5:l2">saken</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">Tot gheener <rhyme label="c" type="m">stont</rhyme></l>
        <l id="s5:l6" met="3" type="-+">En is in sondaers <rhyme label="c" type="m" corresp="#s5:l5">mondt</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Het lof schoon noch <rhyme label="d" type="f">ghepresen</rhyme>,</l>
        <l id="s5:l8" met="2" type="-+">Dus wilt <rhyme label="c" type="m" corresp="#s5:l5">ghesont</rhyme></l>
        <l id="s5:l9" met="3" type="-+">In hoep en liefde <rhyme label="d" type="f" corresp="#s5:l7">wesen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Want siet <rhyme label="a" type="m">aldaer</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Wordt het oordeel <rhyme label="b" type="f">ghehouwen</rhyme>,</l>
        <l id="s6:l3" met="2" type="-+">Christus <rhyme label="a" type="m" corresp="#s6:l1">voorwaer</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Besit in goeder <rhyme label="b" type="f" corresp="#s6:l2">trouwen</rhyme></l>
        <l id="s6:l5" met="2" type="-+">Sijns Vaders <rhyme label="c" type="m">Throon</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">En sijn heylighen <rhyme label="c" type="m" corresp="#s6:l5">schoon</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Sullen oock zijn <rhyme label="d" type="f">verheven</rhyme>,</l>
        <l id="s6:l8" met="2" type="-+">Elcken den <rhyme label="c" type="m" corresp="#s6:l5">loon</rhyme></l>
        <l id="s6:l9" met="3" type="-+">Nae sijner daedt te <rhyme label="d" type="f" corresp="#s6:l7">gheven</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="2" type="-+">In het <rhyme label="a" type="m">ghebet</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Wilt doch vyerich <rhyme label="b" type="f">begeeren</rhyme>,</l>
        <l id="s7:l3" met="2" type="-+">Dat u mach <rhyme label="a" type="m" corresp="#s7:l1">net</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Brenghen tot hoogher <rhyme label="b" type="f" corresp="#s7:l2">eeren</rhyme></l>
        <l id="s7:l5" met="2" type="-+">Eeuwighen <rhyme label="c" type="m">vre</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Te gaen int s’hemels <rhyme label="c" type="m" corresp="#s7:l5">ste</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Dit hebben die <rhyme label="d" type="f">beminnen</rhyme></l>
        <l id="s7:l8" met="2" type="-+">Godt, en oock <rhyme label="c" type="m" corresp="#s7:l5">me4</rhyme></l>
        <l id="s7:l9" met="3" type="-+">Den Naesten in haer <rhyme label="d" type="f" corresp="#s7:l7">sinnen</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="2" type="-+">Laet vrede <rhyme label="a" type="m">zijn</rhyme></l>
        <l id="s8:l2" met="3" type="-+">In Ierusalems <rhyme label="b" type="f">mueren</rhyme>,</l>
        <l id="s8:l3" met="2" type="-+">Haer torrens <rhyme label="a" type="m" corresp="#s8:l1">fijn</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Versien tot elcker <rhyme label="b" type="f" corresp="#s8:l2">uren</rhyme>,</l>
        <l id="s8:l5" met="2" type="-+">Want wie soo <rhyme label="c" type="m">doet</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Behoudt den vrede <rhyme label="c" type="m" corresp="#s8:l5">soet</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Die wapens houdt in <rhyme label="d" type="f">hoede</rhyme>,</l>
        <l id="s8:l8" met="2" type="-+">Recht u <rhyme label="c" type="m" corresp="#s8:l5">ghemoet</rhyme></l>
        <l id="s8:l9" met="3" type="-+">Doch alle tijdt naer <rhyme label="d" type="f" corresp="#s8:l7">t’goede</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="2" type="-+">Lieflijck int <rhyme label="a" type="m">slot</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Wensch ick u dit te <rhyme label="b" type="f">samen</rhyme></l>
        <l id="s9:l3" met="2" type="-+">Vrede van <rhyme label="a" type="m" corresp="#s9:l1">Godt</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Zy u allen met <rhyme label="b" type="f" corresp="#s9:l2">namen</rhyme></l>
        <l id="s9:l5" met="2" type="-+">Aen het <rhyme label="c" type="m">lichaem7</rhyme>.</l>
        <l id="s9:l6" met="3" type="-+">Oock als leden <rhyme label="c" type="m" corresp="#s9:l5">bequaem</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">(Gheeft doch Heere der <rhyme label="d" type="f">Heeren</rhyme>)</l>
        <l id="s9:l8" met="2" type="-+">Dat wy’t <rhyme label="c" type="m" corresp="#s9:l5">deuchtsaem</rhyme></l>
        <l id="s9:l9" met="3" type="-+">Beleven t’uwer <rhyme label="d" type="f" corresp="#s9:l7">eeren</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="2" type="-+">En in u <rhyme label="a" type="m">huys</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Vreedsamich moghen <rhyme label="b" type="f">woonen</rhyme></l>
        <l id="s10:l3" met="2" type="-+">Onder u <rhyme label="a" type="m" corresp="#s10:l1">cruys</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Ons booghen en <rhyme label="b" type="f" corresp="#s10:l2">betoonen</rhyme></l>
        <l id="s10:l5" met="2" type="-+">Maken <rhyme label="c" type="m">bekent</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Dat ghy ons Heere <rhyme label="c" type="m" corresp="#s10:l5">bent</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">In liefde te <rhyme label="d" type="f">bewijsen</rhyme></l>
        <l id="s10:l8" met="2" type="-+">Soo tot den <rhyme label="c" type="m" corresp="#s10:l5">ent</rhyme></l>
        <l id="s10:l9" met="3" type="-+">V onsen Vader <rhyme label="d" type="f" corresp="#s10:l7">prijsen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="2" type="-+">Met uwe <rhyme label="a" type="m">handt</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Wilt ons doch soo <rhyme label="b" type="f">gheleyden</rhyme></l>
        <l id="s11:l3" met="2" type="-+">Naer t’Hemels <rhyme label="a" type="m" corresp="#s11:l1">landt</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">In Ierusalems <rhyme label="b" type="f" corresp="#s11:l2">weyden</rhyme></l>
        <l id="s11:l5" met="2" type="-+">Houdt ghy de <rhyme label="c" type="m">wacht</rhyme></l>
        <l id="s11:l6" met="3" type="-+">Voor de Dieren <rhyme label="c" type="m" corresp="#s11:l5">onsacht</rhyme></l>
        <l id="s11:l7" met="3" type="-+">Die nae ons ziele <rhyme label="d" type="f">gapen</rhyme></l>
        <l id="s11:l8" met="2" type="-+">Dats in die <rhyme label="c" type="m" corresp="#s11:l5">nacht</rhyme></l>
        <l id="s11:l9" met="3" type="-+">Ons doch niet en <rhyme label="d" type="f" corresp="#s11:l7">betrapen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="2" type="-+">Slaet onser <rhyme label="a" type="m">gae</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Comt ghy ons doch te <rhyme label="b" type="f">baten</rhyme>,</l>
        <l id="s12:l3" met="2" type="-+">Op u <rhyme label="a" type="m" corresp="#s12:l1">ghenae</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Ist dat wy ons <rhyme label="b" type="f" corresp="#s12:l2">verlaten</rhyme>,</l>
        <l id="s12:l5" met="2" type="-+">Vervult u <rhyme label="c" type="m">werck</rhyme></l>
        <l id="s12:l6" met="3" type="-+">In ons, en maeckt ons <rhyme label="c" type="m" corresp="#s12:l5">sterck</rhyme></l>
        <l id="s12:l7" met="3" type="-+">Te doen u wel <rhyme label="d" type="f">behaghen</rhyme></l>
        <l id="s12:l8" met="2" type="-+">In s’Weerelts <rhyme label="c" type="m" corresp="#s12:l5">perck</rhyme></l>
        <l id="s12:l9" met="3" type="-+">Den tijdt van onsen <rhyme label="d" type="f" corresp="#s12:l7">daghen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ALleluja, <rhyme label="a" type="f">Alleluja</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">O Godt! O <rhyme label="b" type="m">mensch</rhyme>!</l>
        <l id="s1:l3" met="2" type="-+">Wie soude sich <rhyme label="c" type="f">bedwinghen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Alleluja, <rhyme label="a" type="f" corresp="#s1:l1">alleluja</rhyme>;</l>
        <l id="s1:l5" met="3" type="-+">Met will', met volle <rhyme label="b" type="m" corresp="#s1:l2">wensch</rhyme></l>
        <l id="s1:l6" met="2" type="-+">Alleluja te <rhyme label="c" type="f" corresp="#s1:l3">singhen</rhyme>?</l>
        <l id="s1:l7" met="2" type="-+">Wt vreughd' <rhyme label="d" type="m">divijn</rhyme></l>
        <l id="s1:l8" met="2" type="-+">Ick gantsch <rhyme label="d" type="m" corresp="#s1:l7">verdwijn</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Om dat ick hoor van <rhyme label="e" type="f">vrede</rhyme>.</l>
        <l id="s1:l10" met="2" type="-+">Wilt dan vrolijck <rhyme label="f" type="f">wesen</rhyme>,</l>
        <l id="s1:l11" met="3" type="+-">Heer Iesus is <rhyme label="f" type="f" corresp="#s1:l10">verresen</rhyme></l>
        <l id="s1:l12" met="2" type="+-">Wt <rhyme label="e" type="f" corresp="#s1:l9">Graf-stede</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">O groote <rhyme label="a" type="f">wonderheden</rhyme>!</l>
        <l id="s2:l2" met="3" type="-+">Den dach, den lieven <rhyme label="b" type="m">dach</rhyme></l>
        <l id="s2:l3" met="2" type="-+">Is eens <rhyme label="c" type="f">ghekomen</rhyme>;</l>
        <l id="s2:l4" met="3" type="-+">Dat Christus weer zijn <rhyme label="a" type="f" corresp="#s2:l1">Leden</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Die eerst begraven <rhyme label="b" type="m" corresp="#s2:l2">lach</rhyme>,</l>
        <l id="s2:l6" met="2" type="-+">Heeft <rhyme label="c" type="f" corresp="#s2:l3">aenghenomen</rhyme>;</l>
        <l id="s2:l7" met="2" type="-+">Om dat hy <rhyme label="d" type="m">eens</rhyme></l>
        <l id="s2:l8" met="2" type="-+">Voor des <rhyme label="d" type="m" corresp="#s2:l7">Ghemeens</rhyme></l>
        <l id="s2:l9" met="3" type="-+">Welvaert heeft <rhyme label="e" type="f">ghestreden</rhyme>,</l>
        <l id="s2:l10" met="2" type="-+">Nu is zijn Naem <rhyme label="f" type="f">verheven</rhyme>,</l>
        <l id="s2:l11" met="3" type="+-">Nu is hem weer <rhyme label="f" type="f" corresp="#s2:l10">ghegeven</rhyme></l>
        <l id="s2:l12" met="2" type="+-">'t Eeuwigh <rhyme label="e" type="f" corresp="#s2:l9">leven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Sijt ghy nu van de <rhyme label="a" type="f">sonden</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Met Christus op <rhyme label="b" type="m">ghestaen</rhyme></l>
        <l id="s3:l3" met="2" type="-+">En wel <rhyme label="c" type="f">verreesen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Siet toe dat ghy van <rhyme label="a" type="f" corresp="#s3:l1">stonden</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Ten Graef niet meer wilt <rhyme label="b" type="m" corresp="#s3:l2">gaen</rhyme>;</l>
        <l id="s3:l6" met="2" type="-+">Hebt altijdt <rhyme label="c" type="f" corresp="#s3:l3">vreese</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">Wilt Christus <rhyme label="d" type="m">bloedt</rhyme></l>
        <l id="s3:l8" met="2" type="-+">Onder de <rhyme label="d" type="m" corresp="#s3:l7">voet</rhyme></l>
        <l id="s3:l9" met="3" type="-+">Doch niet weerom gaen <rhyme label="e" type="f">treden</rhyme>,</l>
        <l id="s3:l10" met="2" type="-+">Maer wilt u <rhyme label="f" type="f">begheven</rhyme></l>
        <l id="s3:l11" met="3" type="+-">Tot nieuwicheyt van <rhyme label="f" type="f" corresp="#s3:l10">leven</rhyme>,</l>
        <l id="s3:l12" met="2" type="+-">Want 'tis <rhyme label="e" type="f" corresp="#s3:l9">reden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Christus heeft nu <rhyme label="a" type="f">verlaten</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Het onder-aerdtsche <rhyme label="b" type="m">Graf</rhyme></l>
        <l id="s4:l3" met="2" type="-+">Sonder <rhyme label="c" type="f">berouwen</rhyme>:</l>
        <l id="s4:l4" met="3" type="-+">Seght mensch, wat sal 't u <rhyme label="a" type="f" corresp="#s4:l1">baten</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Dat ghy niet mee den <rhyme label="b" type="m" corresp="#s4:l2">draf</rhyme></l>
        <l id="s4:l6" met="2" type="-+">Begint te <rhyme label="c" type="f" corresp="#s4:l3">schouwen</rhyme>?</l>
        <l id="s4:l7" met="2" type="-+">Slaet dan u <rhyme label="d" type="m">oogh</rhyme></l>
        <l id="s4:l8" met="2" type="-+">Voortaen om <rhyme label="d" type="m" corresp="#s4:l7">hoogh</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">Soeckt daer u vree, en <rhyme label="e" type="f">ruste</rhyme>,</l>
        <l id="s4:l10" met="2" type="-+">Eeuwich sonder <rhyme label="f" type="f">pijnen</rhyme></l>
        <l id="s4:l11" met="3" type="+-">Sal altijt daer <rhyme label="f" type="f" corresp="#s4:l10">verschijnen</rhyme></l>
        <l id="s4:l12" met="2" type="+-">In <rhyme label="e" type="f" corresp="#s4:l9">welluste</rhyme>.</l>
      </lg>
    </lg>
  </text>

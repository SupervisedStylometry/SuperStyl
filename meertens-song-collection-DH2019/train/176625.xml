    <melody>Te mei als alle vogels zingen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Hendrik Rintjes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Aenhoort een Liedt ghy Adams <rhyme label="a" type="m">zaet</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Siet dat ghy hem niet nae en <rhyme label="a" type="m" corresp="#s1:l1">gaet</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Maer volght Christum <rhyme label="b" type="f">ghepresen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">En doet altijdt nae sijnen <rhyme label="a" type="m" corresp="#s1:l1">raet</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">So suldy zaligh <rhyme label="b" type="f" corresp="#s1:l3">wesen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wat van den vleesche is <rhyme label="a" type="m">ghebaert</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Dats vleysch, so ons Christus <rhyme label="a" type="m" corresp="#s2:l1">verklaert</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Alsoo wy moghen <rhyme label="b" type="f">hooren</rhyme>.</l>
        <l id="s2:l4" met="4" type="-+">O menschen bedwinght uwen <rhyme label="a" type="m" corresp="#s2:l1">aert</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Wort uyt den Gheest <rhyme label="b" type="f" corresp="#s2:l3">gheboren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Want vleeschelijck ghesint te <rhyme label="a" type="m">zijn</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Dats Godts vyantschap, hoort wel <rhyme label="a" type="m" corresp="#s3:l1">mijn</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Menschen neemt dit voor <rhyme label="b" type="f">ooghen</rhyme>.</l>
        <l id="s3:l4" met="4" type="-+">Weet dat wy in alsulcken <rhyme label="a" type="m" corresp="#s3:l1">schijn</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Godt niet behagen <rhyme label="b" type="f" corresp="#s3:l3">moghen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Die vleesch’lijck zijn, also men <rhyme label="a" type="m">vint</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Die zijn oock vleeschelijck <rhyme label="a" type="m" corresp="#s4:l1">ghewint</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Men leest van deser <rhyme label="b" type="f">saken</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Een vleesch’lijck mensch is soo <rhyme label="a" type="m" corresp="#s4:l1">verblindt</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Godts Gheest kan hy niet <rhyme label="b" type="f" corresp="#s4:l3">smaiken</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">De wijsheyt Godts so wy <rhyme label="a" type="m">verstaen</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">In gheen quaedtwillighe ziel wil <rhyme label="a" type="m" corresp="#s5:l1">gaen</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Noch in gheen lichaem <rhyme label="b" type="f">mede</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Dat der zonden is <rhyme label="a" type="m" corresp="#s5:l1">onderdaen</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Hierom staet nae den <rhyme label="b" type="f" corresp="#s5:l3">vrede</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">6l. ‘t Boeck der wijsheydt geeft klaer <rhyme label="a" type="m">bediet</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Dat Godts Gheest den gheveynsden <rhyme label="a" type="m" corresp="#s6:l1">vliet</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Dus wilt, nae Petri <rhyme label="b" type="f">segghen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Gheveynsheyt en list nu ter <rhyme label="a" type="m" corresp="#s6:l1">tijdt</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Beginnen af te <rhyme label="b" type="f" corresp="#s6:l3">legghen</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Treckt uyt den ouden mensch <rhyme label="a" type="m">onklaer</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Met zijn quae wercken <rhyme label="a" type="m" corresp="#s7:l1">allegaer</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">En wilt daer op niet <rhyme label="b" type="f">slapen</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Doet aen den nieuwen mensch <rhyme label="a" type="m" corresp="#s7:l1">eerbaer</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Die nae Godt is <rhyme label="b" type="f" corresp="#s7:l3">gheschapen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Leght af die onreynigheydt <rhyme label="a" type="m">nu</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">End’ van alle boosheydt weest <rhyme label="a" type="m" corresp="#s8:l1">schuw</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Wilt u hert niet <rhyme label="b" type="f">verherden</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Met sachtmoedigheydt laet in <rhyme label="a" type="m" corresp="#s8:l1">u</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Godts woort gheplantet <rhyme label="b" type="f" corresp="#s8:l3">werden</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">O menschen al, vaet dit <rhyme label="a" type="m">bediedt</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Ontfanght uyt liefden doch dit <rhyme label="a" type="m" corresp="#s9:l1">Liedt</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Want liefde dedet <rhyme label="b" type="f">dichten</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">En dat uyt sulck een meningh <rhyme label="a" type="m" corresp="#s9:l1">siet</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Oft yemant mochte <rhyme label="b" type="f" corresp="#s9:l3">stichten</rhyme>.</l>
      </lg>
    </lg>
  </text>

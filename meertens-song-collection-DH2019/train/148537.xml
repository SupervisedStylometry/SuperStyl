    <melody>Schoon liefje jent zeer excellent</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ICk bidd' u Hemelsche Vader <rhyme label="a" type="m">mijn</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Wilt mijn gebedt <rhyme label="b" type="f">ontfangen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Wilt mijner doch genadich <rhyme label="a" type="m" corresp="#s1:l1">zijn</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Al door de goetheyt <rhyme label="a" type="m" corresp="#s1:l1">dijn</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Toont my u klaer <rhyme label="a" type="m" corresp="#s1:l1">aenschijn</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Nae u staet mijn <rhyme label="b" type="f" corresp="#s1:l2">verlangen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Mijn zonden, berouwen my, o <rhyme label="a" type="m">Heer</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Och wiltse my <rhyme label="b" type="f">vergeven</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En vernieuwt my doch altijt <rhyme label="a" type="m" corresp="#s2:l1">meer</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Dat ick my heel <rhyme label="a" type="m" corresp="#s2:l1">omkeer</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Dat waer wel mijn <rhyme label="a" type="m" corresp="#s2:l1">begeer</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Nae uwen woort te <rhyme label="b" type="f" corresp="#s2:l2">leven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Maeckt my weerdigh, o Heere <rhyme label="a" type="m">jent</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Een steen tot uwen <rhyme label="b" type="f">Tempel</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Gesondeert op het <rhyme label="a" type="m" corresp="#s3:l1">Fondament</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Christum u Soon <rhyme label="a" type="m" corresp="#s3:l1">bekent</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Dien gy hier hebt <rhyme label="a" type="m" corresp="#s3:l1">gesent</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Ons tot een <rhyme label="b" type="f" corresp="#s3:l2">exempel</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Den wech die hy is <rhyme label="a" type="m">voorgegaen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Die valt mijn vleesch seer <rhyme label="b" type="f">bange</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Dus wilt my Heer altijdt <rhyme label="a" type="m" corresp="#s4:l1">bystaen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">In geenen noot <rhyme label="a" type="m" corresp="#s4:l1">versmaen</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Houdt my recht op de <rhyme label="a" type="m" corresp="#s4:l1">baen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Dat bidd' ick u door <rhyme label="b" type="f" corresp="#s4:l2">sange</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Komt my te hulpe, o Vader <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Wilt mijn geloof <rhyme label="b" type="f">vermeeren</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Een bloeyende ranck uws Wijnstoks <rhyme label="a" type="m" corresp="#s5:l1">soet</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Maeckt my al met der <rhyme label="a" type="m" corresp="#s5:l1">spoet</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Die na u wille <rhyme label="a" type="m" corresp="#s5:l1">doet</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Dat is al mijn <rhyme label="b" type="f" corresp="#s5:l2">begeeren</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Wilt my hier oock maken <rhyme label="a" type="m">bequaem</rhyme></l>
        <l id="s6:l2" met="3" type="-+">O Heere der <rhyme label="b" type="f">Heyrscharen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">een lit te zijn aen u <rhyme label="a" type="m" corresp="#s6:l1">lichaem</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Gy dat hooft soo ick <rhyme label="a" type="m" corresp="#s6:l1">raem</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Door u heylige <rhyme label="a" type="m" corresp="#s6:l1">Naem</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Wilt my van't quaet <rhyme label="b" type="f" corresp="#s6:l2">bewaren</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">In zonden ben ick ontvangen <rhyme label="a" type="m">hier</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">En oock daer in <rhyme label="b" type="f">geboren</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Mijn boose vleesch maeckt goede <rhyme label="a" type="m" corresp="#s7:l1">cier</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">'t Houdt geerne zijn <rhyme label="a" type="m" corresp="#s7:l1">manier</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Helpt my, dat ick 't <rhyme label="a" type="m" corresp="#s7:l1">bestier</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Of 't is met my <rhyme label="b" type="f" corresp="#s7:l2">verloren</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">O Heer, nu wilt my geven <rhyme label="a" type="m">raet</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Wat sal ick doch <rhyme label="b" type="f">beginnen</rhyme>?</l>
        <l id="s8:l3" met="4" type="-+">Mijn vleesch is genegen tot <rhyme label="a" type="m" corresp="#s8:l1">quaet</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">De Geest dat <rhyme label="a" type="m" corresp="#s8:l1">wederstaet</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Ick roep tot u om <rhyme label="a" type="m" corresp="#s8:l1">baet</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Dat ick 't mach <rhyme label="b" type="f" corresp="#s8:l2">verwinnen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Weest niet verslagen, o leden <rhyme label="a" type="m">teer</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Ick sal u haest <rhyme label="b" type="f">ontladen</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Al stelt hem't vleesch seer hert te <rhyme label="a" type="m" corresp="#s9:l1">weer</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Druckt het doch altijdt <rhyme label="a" type="m" corresp="#s9:l1">neer</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">En schickt u na mijn <rhyme label="a" type="m" corresp="#s9:l1">leer</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">ick sal u niet <rhyme label="b" type="f" corresp="#s9:l2">versmaden</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Van't vleesch u niet verwinnen <rhyme label="a" type="m">laet</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Nu, noch tot geenen <rhyme label="b" type="f">tijden</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Ick sal u haest komen te <rhyme label="a" type="m" corresp="#s10:l1">baet</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Mijn woordt stelt u de <rhyme label="a" type="m" corresp="#s10:l1">maet</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Besiet wat daer in <rhyme label="a" type="m" corresp="#s10:l1">staet</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Dat sal u doen <rhyme label="b" type="f" corresp="#s10:l2">verblijden</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Merckt an haere <rhyme label="a" type="m">beloftenis</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Die hier't vleesch <rhyme label="b" type="f">overwinnen</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Sy sullen ontfaen de Kroon <rhyme label="a" type="m" corresp="#s11:l1">gewis</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Dus weest blijde en <rhyme label="a" type="m" corresp="#s11:l1">vris</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Daer vreught sonder eynd' <rhyme label="a" type="m" corresp="#s11:l1">is</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Die geen mensch kan <rhyme label="b" type="f" corresp="#s11:l2">versinnen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Dus strijt volherdig tot der <rhyme label="a" type="m">doot</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Ick sal u niet <rhyme label="b" type="f">verlaten</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Maer helpen u uyt alle <rhyme label="a" type="m" corresp="#s12:l1">noodt</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Uyt rechte liefde <rhyme label="a" type="m" corresp="#s12:l1">bloot</rhyme>,</l>
        <l id="s12:l5" met="4" type="-+">Door barmhertigheyt <rhyme label="a" type="m" corresp="#s12:l1">groot</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Wilt dit in' herte <rhyme label="b" type="f" corresp="#s12:l2">vaten</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Ick sal vercieren, met kleeders <rhyme label="a" type="m">wit</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Die hier volherdigh <rhyme label="b" type="f">strijden</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Dus door't geloof, waeckt ende <rhyme label="a" type="m" corresp="#s13:l1">bidt</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">U sal gebeuren <rhyme label="a" type="m" corresp="#s13:l1">dit</rhyme>,</l>
        <l id="s13:l5" met="4" type="-+">Dat gy op mijn stoel <rhyme label="a" type="m" corresp="#s13:l1">sit</rhyme>,</l>
        <l id="s13:l6" met="3" type="-+">Sonder eynde, noch <rhyme label="b" type="f" corresp="#s13:l2">tijden</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Troost u met dees beloften <rhyme label="a" type="m">reyn</rhyme></l>
        <l id="s14:l2" met="3" type="-+">O gy mijn <rhyme label="b" type="f">uytverkoren</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Mijn goet sal u worden <rhyme label="a" type="m" corresp="#s14:l1">gemeyn</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">En acht dit doch niet <rhyme label="a" type="m" corresp="#s14:l1">kleyn</rhyme>,</l>
        <l id="s14:l5" met="4" type="-+">In mijn Rijcke <rhyme label="a" type="m" corresp="#s14:l1">certeyn</rhyme>,</l>
        <l id="s14:l6" met="3" type="-+">Daer sult gy vreucht <rhyme label="b" type="f" corresp="#s14:l2">oorboren</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Die dit Liedeken heeft <rhyme label="a" type="m">gestelt</rhyme></l>
        <l id="s15:l2" met="3" type="-+">Ende eerstmael ginck <rhyme label="b" type="f">dichten</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">Wordt van sijn vleesch soo seer <rhyme label="a" type="m" corresp="#s15:l1">gequelt</rhyme>,</l>
        <l id="s15:l4" met="4" type="-+">Den Geest doet het <rhyme label="a" type="m" corresp="#s15:l1">geweldt</rhyme>,</l>
        <l id="s15:l5" met="4" type="-+">Zijn lust ter neder <rhyme label="a" type="m" corresp="#s15:l1">veldt</rhyme>,</l>
        <l id="s15:l6" met="3" type="-+">O Heer door u <rhyme label="b" type="f" corresp="#s15:l2">verlichten</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

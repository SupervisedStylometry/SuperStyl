    <melody>In een groot ongeluk ben ik geboren</melody>
    <categories>
      <category translation="formal genres">formele genres</category>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Leenaert Clock</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Fonteyne soet vol van <rhyme label="a" type="f">ghenaden</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Die overloopt tot aller <rhyme label="b" type="m">tijt</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Wilt doch mijn ziele oock <rhyme label="a" type="f" corresp="#s1:l1">versaden</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Mijn Godt die gantsch barmhertich <rhyme label="b" type="m" corresp="#s1:l2">zijt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Laet uwe barmherticheyt <rhyme label="a" type="f">mercken</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Ghelijck als ghy my hebt <rhyme label="b" type="m">ghemaeckt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Soo wilt my oock in deuchden <rhyme label="a" type="f" corresp="#s2:l1">stercken</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Tot ick ten Hemel zy <rhyme label="b" type="m" corresp="#s2:l2">gheraeckt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Kere mijn hert, en wilt dat <rhyme label="a" type="f">bereyden</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Om te bewijsen wat ick <rhyme label="b" type="m">mach</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Nu wercken der <rhyme label="a" type="f" corresp="#s3:l1">barmherticheyden</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Aen mijnen Naesten nacht en <rhyme label="b" type="m" corresp="#s3:l2">dach</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Iae dat ick mach mijn ziele <rhyme label="a" type="f">spijsen</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Met Hemels broot, en drincken <rhyme label="b" type="m">meest</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Levende water int <rhyme label="a" type="f" corresp="#s4:l1">oprijsen</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Door uwen goeden heylighen <rhyme label="b" type="m" corresp="#s4:l2">Gheest</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Aentrecken t’cleydt der <rhyme label="a" type="f">salicheyden</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Op datse mach Heer zijn <rhyme label="b" type="m">becleydt</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Met uwer handt wiltse doch <rhyme label="a" type="f" corresp="#s5:l1">leyden</rhyme></l>
        <l id="s5:l4" met="4" type="-+">In u herberghe schoon <rhyme label="b" type="m" corresp="#s5:l2">bereydt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Naer ghesontheyt doet my <rhyme label="a" type="f">verlanghen</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Besoeckt my doch in mijnen <rhyme label="b" type="m">poot</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Daer ick verstrickt ben en <rhyme label="a" type="f" corresp="#s6:l1">ghevanghen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Verlost mijn ziele van den <rhyme label="b" type="m" corresp="#s6:l2">doot</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Soo ick dees hulp van u <rhyme label="a" type="f">bevonde</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Aen mijner zielen <rhyme label="b" type="m">openbaer</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Soo soud’ ick u van herten <rhyme label="a" type="f" corresp="#s7:l1">gronde</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Loven en dancken lieve <rhyme label="b" type="m" corresp="#s7:l2">Vaer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Neemt mijner waer, in uwen <rhyme label="a" type="f">handen</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Beveel ick nu mijn ziel en <rhyme label="b" type="m">lijf</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Doet mijn herte tot uwaerts <rhyme label="a" type="f" corresp="#s8:l1">branden</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Daer naer schickt Heer al mijn <rhyme label="b" type="m" corresp="#s8:l2">bedrijf</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

    <melody>Kom Aura lief</melody>
    <categories>
      <category translation="formal genres">formele genres</category>
      <category translation="love and sex">liefde en seks</category>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Pieter Lenaerts van der Goes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">COmt Aura <rhyme label="a" type="m">lief</rhyme> //</l>
        <l id="s1:l2" met="4" type="+-">V soetheyt nu ontmoete // <rhyme label="b" type="m">my</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">In desen <rhyme label="a" type="m" corresp="#s1:l1">brief</rhyme> //</l>
        <l id="s1:l4" met="4" type="+-">Val ick absent te voete // <rhyme label="b" type="m" corresp="#s1:l2">dy</rhyme>,</l>
        <l id="s1:l5" met="2" type="+-">Een groete // <rhyme label="b" type="m" corresp="#s1:l2">sy</rhyme> //</l>
        <l id="s1:l6" met="3" type="-+">V van herten daer <rhyme label="c" type="f">neven</rhyme> //</l>
        <l id="s1:l7" met="1" type="-+"><rhyme label="c" type="f" corresp="#s1:l6">Geschreven</rhyme> //</l>
        <l id="s1:l8" met="2" type="+-">Laet <rhyme label="d" type="f">geschieden</rhyme> //</l>
        <l id="s1:l9" met="2" type="+-">Mijn <rhyme label="d" type="f" corresp="#s1:l8">ontbieden</rhyme> //</l>
        <l id="s1:l10" met="3" type="+-">Die my smerten // <rhyme label="e" type="m">cont</rhyme> //</l>
        <l id="s1:l11" met="2" type="+-">Wilt af <rhyme label="d" type="f" corresp="#s1:l8">vlieden</rhyme> //</l>
        <l id="s1:l12" met="2" type="+-">Sulcke <rhyme label="d" type="f" corresp="#s1:l8">lieden</rhyme> //</l>
        <l id="s1:l13" met="2" type="+-">Die u <rhyme label="d" type="f" corresp="#s1:l8">rieden</rhyme> //</l>
        <l id="s1:l14" met="2" type="+-">My te <rhyme label="d" type="f" corresp="#s1:l8">wieden</rhyme> //</l>
        <l id="s1:l15" met="3" type="+-">Wt der herten // <rhyme label="e" type="m" corresp="#s1:l10">gront</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">O f ghy my <rhyme label="a" type="m">als</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Ballingh, van u gesichte // <rhyme label="b" type="m">drijft</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Op mijnen <rhyme label="a" type="m" corresp="#s2:l1">hals</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Dit jock (swaer van gewichte) // <rhyme label="b" type="m" corresp="#s2:l2">blijft</rhyme>,</l>
        <l id="s2:l5" met="2" type="+-">In dichte // <rhyme label="b" type="m" corresp="#s2:l2">schrijft</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Mijn hant noch even <rhyme label="c" type="f">seere</rhyme>,</l>
        <l id="s2:l7" met="1" type="-+">V <rhyme label="c" type="f" corresp="#s2:l6">eere</rhyme>,</l>
        <l id="s2:l8" met="2" type="+-">Wat can <rhyme label="d" type="f">schaden</rhyme></l>
        <l id="s2:l9" met="2" type="+-">Der <rhyme label="d" type="f" corresp="#s2:l8">genaden</rhyme></l>
        <l id="s2:l10" met="3" type="+-">Tijt, verwachten // <rhyme label="e" type="m">langh</rhyme></l>
        <l id="s2:l11" met="2" type="+-">Ben <rhyme label="d" type="f" corresp="#s2:l8">beraden</rhyme>,</l>
        <l id="s2:l12" met="2" type="+-">Met <rhyme label="d" type="f" corresp="#s2:l8">versmaden</rhyme></l>
        <l id="s2:l13" met="2" type="+-">Dus <rhyme label="d" type="f" corresp="#s2:l8">geladen</rhyme>,</l>
        <l id="s2:l14" met="2" type="+-">T'gaen den <rhyme label="d" type="f" corresp="#s2:l8">quaden</rhyme></l>
        <l id="s2:l15" met="3" type="+-">Ongeachten // <rhyme label="e" type="m" corresp="#s2:l10">gangh</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Rayende <rhyme label="a" type="m">licht</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Ontsprongen inden morgen // <rhyme label="b" type="m">vrough</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Mijn siel <rhyme label="a" type="m" corresp="#s3:l1">verplicht</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Aen u, altijt met sorgen // <rhyme label="b" type="m" corresp="#s3:l2">iough</rhyme>,</l>
        <l id="s3:l5" met="2" type="+-">Verborgen // <rhyme label="b" type="m" corresp="#s3:l2">drough</rhyme></l>
        <l id="s3:l6" met="3" type="-+">V overgroote <rhyme label="c" type="f">minne</rhyme>:</l>
        <l id="s3:l7" met="1" type="-+"><rhyme label="c" type="f" corresp="#s3:l6">Goddinne</rhyme>,</l>
        <l id="s3:l8" met="2" type="+-">Laet der <rhyme label="d" type="f">schanden</rhyme>,</l>
        <l id="s3:l9" met="2" type="+-">Niet <rhyme label="d" type="f" corresp="#s3:l8">verbranden</rhyme>,</l>
        <l id="s3:l10" met="3" type="+-">My, met groot // <rhyme label="e" type="m">verwijt</rhyme>:</l>
        <l id="s3:l11" met="2" type="+-">Spijt <rhyme label="d" type="f" corresp="#s3:l8">vyanden</rhyme>:</l>
        <l id="s3:l12" met="2" type="+-">Kerckers <rhyme label="d" type="f" corresp="#s3:l8">banden</rhyme>,</l>
        <l id="s3:l13" met="2" type="+-">Deur u <rhyme label="d" type="f" corresp="#s3:l8">handen</rhyme>.</l>
        <l id="s3:l14" met="2" type="+-">Werd' ick <rhyme label="d" type="f" corresp="#s3:l8">vanden</rhyme></l>
        <l id="s3:l15" met="3" type="+-">Swaersten noot // <rhyme label="e" type="m" corresp="#s3:l10">bevrijt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Naer redens <rhyme label="a" type="m">recht</rhyme></l>
        <l id="s4:l2" met="4" type="+-">V lief, Laurier, en croone // <rhyme label="b" type="m">vought</rhyme>:</l>
        <l id="s4:l3" met="2" type="-+">Wee zy den <rhyme label="a" type="m" corresp="#s4:l1">knecht</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Die yet op dijn persoone // <rhyme label="b" type="m" corresp="#s4:l2">wrought</rhyme>:</l>
        <l id="s4:l5" met="2" type="+-">Hoe schoone // <rhyme label="b" type="m" corresp="#s4:l2">lought</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Ghy, in ons eerst <rhyme label="c" type="f">genaken</rhyme>,</l>
        <l id="s4:l7" met="1" type="-+">Wy <rhyme label="c" type="f" corresp="#s4:l6">spraken</rhyme></l>
        <l id="s4:l8" met="2" type="+-">Soo <rhyme label="d" type="f">besneden</rhyme>,</l>
        <l id="s4:l9" met="2" type="+-">Soeten <rhyme label="d" type="f" corresp="#s4:l8">reden</rhyme>,</l>
        <l id="s4:l10" met="3" type="+-">Sonder schamen // <rhyme label="e" type="m">yet</rhyme>:</l>
        <l id="s4:l11" met="2" type="+-">Waer is <rhyme label="d" type="f" corresp="#s4:l8">heden</rhyme></l>
        <l id="s4:l12" met="2" type="+-">Dien <rhyme label="d" type="f" corresp="#s4:l8">voorleden</rhyme></l>
        <l id="s4:l13" met="2" type="+-">Tijt <rhyme label="d" type="f" corresp="#s4:l8">getreden</rhyme>,</l>
        <l id="s4:l14" met="2" type="+-">Die met <rhyme label="d" type="f" corresp="#s4:l8">vreden</rhyme>,</l>
        <l id="s4:l15" met="3" type="+-">Ons versamen // <rhyme label="e" type="m" corresp="#s4:l10">liet</rhyme>?</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Een uerken <rhyme label="a" type="m">cort</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Dunckt my gelijck veel iaren // <rhyme label="b" type="m">zijn</rhyme>)</l>
        <l id="s5:l3" met="2" type="-+">Wanneer my <rhyme label="a" type="m" corresp="#s5:l1">wort</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Ontvreemt soo hemelsch claren // <rhyme label="b" type="m" corresp="#s5:l2">schijn</rhyme>:</l>
        <l id="s5:l5" met="2" type="+-">Hoe swaren // <rhyme label="b" type="m" corresp="#s5:l2">pijn</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Ick draeght in uwen <rhyme label="c" type="f">name</rhyme>:</l>
        <l id="s5:l7" met="1" type="-+"><rhyme label="c" type="f" corresp="#s5:l6">Eersame</rhyme>,</l>
        <l id="s5:l8" met="2" type="+-">Wat ghy <rhyme label="d" type="f">dochte</rhyme>,</l>
        <l id="s5:l9" met="2" type="+-">Ick <rhyme label="d" type="f" corresp="#s5:l8">volbroghte</rhyme>,</l>
        <l id="s5:l10" met="3" type="+-">Oyt al even // <rhyme label="e" type="m">vroet</rhyme>:</l>
        <l id="s5:l11" met="2" type="+-"><rhyme label="d" type="f" corresp="#s5:l8">Wtgesochte</rhyme>,</l>
        <l id="s5:l12" met="2" type="+-"><rhyme label="d" type="f" corresp="#s5:l8">Welgewrochte</rhyme>,</l>
        <l id="s5:l13" met="2" type="+-"><rhyme label="d" type="f" corresp="#s5:l8">Diergecochte</rhyme>,</l>
        <l id="s5:l14" met="2" type="+-">Peerle, <rhyme label="d" type="f" corresp="#s5:l8">mochte</rhyme></l>
        <l id="s5:l15" met="3" type="+-">Ghy my gheuen // <rhyme label="e" type="m" corresp="#s5:l10">spoet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Leef ick int <rhyme label="a" type="m">vier</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Deur u, als den Salmander // <rhyme label="b" type="m">doet</rhyme>,</l>
        <l id="s6:l3" met="2" type="-+">Cupido <rhyme label="a" type="m" corresp="#s6:l1">schier</rhyme></l>
        <l id="s6:l4" met="4" type="+-">T'hert af, met zijnen brander // <rhyme label="b" type="m" corresp="#s6:l2">wroet</rhyme>,</l>
        <l id="s6:l5" met="2" type="+-">Leander // <rhyme label="b" type="m" corresp="#s6:l2">moet</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Ick volgen, niet <rhyme label="c" type="f">gedincken</rhyme></l>
        <l id="s6:l7" met="1" type="-+"><rhyme label="c" type="f" corresp="#s6:l6">T'verdrincken</rhyme>:</l>
        <l id="s6:l8" met="2" type="+-">Deur mijn <rhyme label="d" type="f">poogen</rhyme></l>
        <l id="s6:l9" met="2" type="+-">Sal ick <rhyme label="d" type="f" corresp="#s6:l8">boogen</rhyme></l>
        <l id="s6:l10" met="3" type="+-">S'waters stercken // <rhyme label="e" type="m">vloet</rhyme>:</l>
        <l id="s6:l11" met="2" type="+-">Wilt <rhyme label="d" type="f" corresp="#s6:l8">medoogen</rhyme></l>
        <l id="s6:l12" met="2" type="+-">Vanden <rhyme label="d" type="f" corresp="#s6:l8">hoogen</rhyme></l>
        <l id="s6:l13" met="2" type="+-">Toren, <rhyme label="d" type="f" corresp="#s6:l8">toogen</rhyme>,</l>
        <l id="s6:l14" met="2" type="+-">Dat mijn <rhyme label="d" type="f" corresp="#s6:l8">oogen</rhyme>,</l>
        <l id="s6:l15" met="3" type="+-">V licht merckten // <rhyme label="e" type="m" corresp="#s6:l10">soet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="2" type="-+">Iason <rhyme label="a" type="m">verslough</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Den Draeck, die hem fel tegen // <rhyme label="b" type="m">blies</rhyme>,</l>
        <l id="s7:l3" met="2" type="-+">Heeft inden <rhyme label="a" type="m" corresp="#s7:l1">plough</rhyme></l>
        <l id="s7:l4" met="4" type="+-">De Stieren wreet geslegen // <rhyme label="b" type="m" corresp="#s7:l2">dies</rhyme></l>
        <l id="s7:l5" met="2" type="+-">Vercregen // <rhyme label="b" type="m" corresp="#s7:l2">t'vlies</rhyme>:</l>
        <l id="s7:l6" met="3" type="-+">Cause was <rhyme label="c" type="f">d'uytvercoren</rhyme></l>
        <l id="s7:l7" met="1" type="-+">
          <rhyme label="c" type="f" corresp="#s7:l6">Alvoren</rhyme>
        </l>
        <l id="s7:l8" met="2" type="+-">Dat ghy <rhyme label="d" type="f">ionde</rhyme></l>
        <l id="s7:l9" met="2" type="+-">Sulck <rhyme label="d" type="f" corresp="#s7:l8">ghesonde</rhyme>,</l>
        <l id="s7:l10" met="3" type="+-">Sonder scheyden // <rhyme label="e" type="m">van</rhyme>,</l>
        <l id="s7:l11" met="2" type="+-">Quets', noch <rhyme label="d" type="f" corresp="#s7:l8">wonde</rhyme>,</l>
        <l id="s7:l12" met="2" type="+-">Deeren <rhyme label="d" type="f" corresp="#s7:l8">conde</rhyme>,</l>
        <l id="s7:l13" met="2" type="+-">D'aertsche <rhyme label="d" type="f" corresp="#s7:l8">ronde</rhyme>,</l>
        <l id="s7:l14" met="2" type="+-">Dienstbaer <rhyme label="d" type="f" corresp="#s7:l8">stonde</rhyme></l>
        <l id="s7:l15" met="3" type="+-">Onser beyden // <rhyme label="e" type="m" corresp="#s7:l10">dan</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="2" type="-+">Als <rhyme label="a" type="m">magnifijck</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Princesse, ghy ten thoone // <rhyme label="b" type="m">sit</rhyme>,</l>
        <l id="s8:l3" met="2" type="-+">Ja puer <rhyme label="a" type="m" corresp="#s8:l1">gelijck</rhyme></l>
        <l id="s8:l4" met="4" type="+-">een duyfken zijt: idoone // <rhyme label="b" type="m" corresp="#s8:l2">wit</rhyme>,</l>
        <l id="s8:l5" met="2" type="+-">Mignoone // <rhyme label="b" type="m" corresp="#s8:l2">dit</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Ontfangt (van my arm <rhyme label="c" type="f">crancke</rhyme>)</l>
        <l id="s8:l7" met="1" type="-+">In <rhyme label="c" type="f" corresp="#s8:l6">dancke</rhyme>:</l>
        <l id="s8:l8" met="2" type="+-">Soo sal <rhyme label="d" type="f">desen</rhyme></l>
        <l id="s8:l9" met="2" type="+-">Brief, int <rhyme label="d" type="f" corresp="#s8:l8">lesen</rhyme>,</l>
        <l id="s8:l10" met="3" type="+-">V behagen // <rhyme label="e" type="m">meest</rhyme>:</l>
        <l id="s8:l11" met="2" type="+-">Dijn <rhyme label="d" type="f" corresp="#s8:l8">gepresen</rhyme>,</l>
        <l id="s8:l12" met="2" type="+-">Hoogh <rhyme label="d" type="f" corresp="#s8:l8">geresen</rhyme>,</l>
        <l id="s8:l13" met="2" type="+-">Soet by <rhyme label="d" type="f" corresp="#s8:l8">wesen</rhyme>,</l>
        <l id="s8:l14" met="2" type="+-">Sal <rhyme label="d" type="f" corresp="#s8:l8">genesen</rhyme>,</l>
        <l id="s8:l15" met="3" type="+-">Mijn verslagen // <rhyme label="e" type="m" corresp="#s8:l10">geest</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Hoort toe wat ick u <rhyme label="a" type="f">leere</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Kinders van goeden <rhyme label="b" type="m">aert</rhyme>:</l>
        <l id="s1:l3" met="3" type="-+">Dient voor al God den <rhyme label="a" type="f" corresp="#s1:l1">Heere</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Met geen fond u <rhyme label="b" type="m" corresp="#s1:l2">beswaert</rhyme>:</l>
        <l id="s1:l5" met="3" type="-+">Ghy sijt toch al <rhyme label="c" type="f">herboren</rhyme></l>
        <l id="s1:l6" met="3" type="-+">In Christo Iesu <rhyme label="d" type="m">fijn</rhyme>:</l>
        <l id="s1:l7" met="3" type="-+">Gaet ghy nu weer <rhyme label="c" type="f" corresp="#s1:l5">verloren</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Ten sal maer u schult <rhyme label="d" type="m" corresp="#s1:l6">sijn</rhyme>.</l>
        <l id="s1:l9" met="3" type="-+">Ghy sijt toch al <rhyme label="c" type="f" corresp="#s1:l5">herboren</rhyme></l>
        <l id="s1:l10" met="3" type="-+">In Christo Iesu <rhyme label="d" type="m" corresp="#s1:l6">fijn</rhyme>:</l>
        <l id="s1:l11" met="3" type="+-">Gaet ghy nu weer <rhyme label="c" type="f" corresp="#s1:l5">verloren</rhyme></l>
        <l id="s1:l12" met="3" type="-+">Ten sal maer u schult <rhyme label="d" type="m" corresp="#s1:l6">sijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Maer wilt ghy wel u <rhyme label="a" type="f">leven</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Aenstellen naer <rhyme label="b" type="m">behoor</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Hoort niet nae t’quaet <rhyme label="a" type="f" corresp="#s2:l1">ingeven</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Al vanden helschen <rhyme label="b" type="m" corresp="#s2:l2">Moor</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">Oock vande quade <rhyme label="c" type="f">leckers</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Die vuyl manierich <rhyme label="d" type="m">sijn</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Wacht u, t’sijn cleyne <rhyme label="c" type="f" corresp="#s2:l5">neckers</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Sy stroyen quaet <rhyme label="d" type="m" corresp="#s2:l6">fenijn</rhyme>.</l>
        <l id="s2:l9" met="3" type="-+">Oock vande quade <rhyme label="c" type="f" corresp="#s2:l5">leckers</rhyme></l>
        <l id="s2:l10" met="3" type="-+">Die vuyl manierich <rhyme label="d" type="m" corresp="#s2:l6">sijn</rhyme>,</l>
        <l id="s2:l11" met="3" type="+-">Wacht u, t’sijn cleyne <rhyme label="c" type="f" corresp="#s2:l5">neckers</rhyme>,</l>
        <l id="s2:l12" met="3" type="-+">Sy stroyen quaet <rhyme label="d" type="m" corresp="#s2:l6">fenijn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Maer noch wil ick u <rhyme label="a" type="f">bringen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Al voorder tot de <rhyme label="b" type="m">deucht</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">En wilt my niet <rhyme label="a" type="f" corresp="#s3:l1">ontspringen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Komt mee ghy jonghe <rhyme label="b" type="m" corresp="#s3:l2">Ieucht</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Komt hoort <rhyme label="c" type="f">catechiseren</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En komter met <rhyme label="d" type="m">jolijt</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">En wilt toch niet <rhyme label="c" type="f" corresp="#s3:l5">faeljeren</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">T’is toch al u <rhyme label="d" type="m" corresp="#s3:l6">profijt</rhyme>.</l>
        <l id="s3:l9" met="3" type="-+">Komt hoort <rhyme label="c" type="f" corresp="#s3:l5">catechiseren</rhyme>,</l>
        <l id="s3:l10" met="3" type="-+">En komter met <rhyme label="d" type="m" corresp="#s3:l6">jolijt</rhyme>,</l>
        <l id="s3:l11" met="3" type="+-">En wilt toch niet <rhyme label="c" type="f" corresp="#s3:l5">faeljeren</rhyme>,</l>
        <l id="s3:l12" met="3" type="-+">T’is toch al u <rhyme label="d" type="m" corresp="#s3:l6">profijt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Der sult ghy wonder <rhyme label="a" type="f">leeren</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En veel dingen <rhyme label="b" type="m">onclaer</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Sullen door lichts <rhyme label="a" type="f" corresp="#s4:l1">vermeeren</rhyme></l>
        <l id="s4:l4" met="3" type="-+">V worden <rhyme label="b" type="m" corresp="#s4:l2">openbaer</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">Oock sult ghy hooren <rhyme label="c" type="f">spreken</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Seer fraey en <rhyme label="d" type="m">excellent</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Sy staen al op haer <rhyme label="c" type="f" corresp="#s4:l5">reken</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Met oorden <rhyme label="d" type="m" corresp="#s4:l6">pertinent</rhyme>.</l>
        <l id="s4:l9" met="3" type="-+">Oock sult ghy hooren <rhyme label="c" type="f" corresp="#s4:l5">spreken</rhyme></l>
        <l id="s4:l10" met="3" type="-+">Seer fraey en <rhyme label="d" type="m" corresp="#s4:l6">excellent</rhyme>,</l>
        <l id="s4:l11" met="3" type="+-">Sy staen al op haer <rhyme label="c" type="f" corresp="#s4:l5">reken</rhyme>,</l>
        <l id="s4:l12" met="3" type="-+">Met oorden <rhyme label="d" type="m" corresp="#s4:l6">pertinent</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Noch sult ghy hooren <rhyme label="a" type="f">singhen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Een liet met soeten <rhyme label="b" type="m">toon</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Van geestelijcke <rhyme label="a" type="f" corresp="#s5:l1">dingen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Tot deuchden seer <rhyme label="b" type="m" corresp="#s5:l2">ydoon</rhyme>:</l>
        <l id="s5:l5" met="3" type="-+">Leert dese oock van <rhyme label="c" type="f">buyten</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">En laet de vuyle <rhyme label="d" type="m">staen</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Laet die vuyle <rhyme label="c" type="f" corresp="#s5:l5">schavuyten</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Die nae de Helle <rhyme label="d" type="m" corresp="#s5:l6">gaen</rhyme>.</l>
        <l id="s5:l9" met="3" type="-+">Leert dese oock van <rhyme label="c" type="f" corresp="#s5:l5">buyten</rhyme>,</l>
        <l id="s5:l10" met="3" type="-+">En laet de vuyle <rhyme label="d" type="m" corresp="#s5:l6">staen</rhyme>,</l>
        <l id="s5:l11" met="3" type="+-">Laet die vuyle <rhyme label="c" type="f" corresp="#s5:l5">schavuyten</rhyme></l>
        <l id="s5:l12" met="3" type="-+">Die nae de Helle <rhyme label="d" type="m" corresp="#s5:l6">gaen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Maer als ghy nu te <rhyme label="a" type="f">gader</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Den Catechismus <rhyme label="b" type="m">hoort</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Ick ben u een goet <rhyme label="a" type="f" corresp="#s6:l1">rader</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Den Pater niet en <rhyme label="b" type="m" corresp="#s6:l2">stoort</rhyme>:</l>
        <l id="s6:l5" met="3" type="-+">Want anders sout ghy <rhyme label="c" type="f">derven</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Alle die prijsen <rhyme label="d" type="m">schoon</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Die de stille <rhyme label="c" type="f" corresp="#s6:l5">verwerven</rhyme></l>
        <l id="s6:l8" met="3" type="-+">En krijghen voor haer <rhyme label="d" type="m" corresp="#s6:l6">loon</rhyme>.</l>
        <l id="s6:l9" met="3" type="-+">Want anders sout ghy <rhyme label="c" type="f" corresp="#s6:l5">derven</rhyme></l>
        <l id="s6:l10" met="3" type="-+">Alle die prijsen <rhyme label="d" type="m" corresp="#s6:l6">schoon</rhyme>,</l>
        <l id="s6:l11" met="3" type="+-">Die de stille <rhyme label="c" type="f" corresp="#s6:l5">verwerven</rhyme></l>
        <l id="s6:l12" met="3" type="-+">En krijghen voor haer <rhyme label="d" type="m" corresp="#s6:l6">loon</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Dus handekens te <rhyme label="a" type="f">samen</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">En wilt de oogen <rhyme label="b" type="m">slaen</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Op Pater nae <rhyme label="a" type="f" corresp="#s7:l1">betamen</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">En hoort sijn goet <rhyme label="b" type="m" corresp="#s7:l2">vermaen</rhyme>:</l>
        <l id="s7:l5" met="3" type="-+">Dus doende suldy <rhyme label="c" type="f">wassen</rhyme></l>
        <l id="s7:l6" met="3" type="-+">In Godts graey <rhyme label="d" type="m">divyn</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">En groote wijsheyt <rhyme label="c" type="f" corresp="#s7:l5">tassen</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Op seer corten <rhyme label="d" type="m" corresp="#s7:l6">termijn</rhyme>.</l>
        <l id="s7:l9" met="3" type="-+">Dus doende suldy <rhyme label="c" type="f" corresp="#s7:l5">wassen</rhyme></l>
        <l id="s7:l10" met="3" type="-+">In Godts graey <rhyme label="d" type="m" corresp="#s7:l6">divyn</rhyme>,</l>
        <l id="s7:l11" met="3" type="+-">En groote wijsheyt <rhyme label="c" type="f" corresp="#s7:l5">tassen</rhyme>,</l>
        <l id="s7:l12" met="3" type="-+">Op seer corten <rhyme label="d" type="m" corresp="#s7:l6">termijn</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

      <category translation="occasions">gelegenheden</category>
    </categories>
  <author>Hendrik Rintjes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Och Vrienden als ghy <rhyme label="a" type="m">gaet</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">U hert moet ghy hier <rhyme label="b" type="f">laten</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Want soo ghy ons <rhyme label="a" type="m" corresp="#s1:l1">verlaet</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Wat sal ons by komst <rhyme label="b" type="f" corresp="#s1:l2">baten</rhyme>:</l>
        <l id="s1:l5" met="3" type="-+">Soo ghy gaet uwer <rhyme label="b" type="f" corresp="#s1:l2">straten</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Nae d’alghemeynen <rhyme label="c" type="m">loop</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">‘k Een kan ‘t niet anders <rhyme label="b" type="f" corresp="#s1:l2">vaten</rhyme>,</l>
        <l id="s1:l8" met="3" type="+-">Of ‘t waer een diere <rhyme label="c" type="m" corresp="#s1:l6">koop</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Wy hebben onsen <rhyme label="a" type="m">tijdt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Soo soetelijck <rhyme label="b" type="f">ghesleten</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Tot der Zielen <rhyme label="a" type="m" corresp="#s2:l1">profijt</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">De eden <rhyme label="b" type="f" corresp="#s2:l2">uyt-ghemeten</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">Soud ghy ons soo <rhyme label="b" type="f" corresp="#s2:l2">vergheten</rhyme>:</l>
        <l id="s2:l6" met="3" type="-+">Als elck nu keert in ‘t <rhyme label="c" type="m">sijn</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Dit moet ghy van ons <rhyme label="b" type="f" corresp="#s2:l2">weten</rhyme>,</l>
        <l id="s2:l8" met="3" type="+-">‘t Waer ons een groote <rhyme label="c" type="m" corresp="#s2:l6">pijn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Het sou ons schijnen <rhyme label="a" type="m">toe</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Of ons ghemeynschap <rhyme label="b" type="f">heden</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Niet dienen sou in ‘t <rhyme label="a" type="m" corresp="#s3:l1">goe</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Soowy gheen blijck en <rhyme label="b" type="f" corresp="#s3:l2">deden</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Van liefden, en van <rhyme label="b" type="f" corresp="#s3:l2">vreden</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En soo men somtijds <rhyme label="c" type="m">siet</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Elck een in sijn <rhyme label="b" type="f" corresp="#s3:l2">ghebeden</rhyme>,</l>
        <l id="s3:l8" met="3" type="+-">Malkander dienden <rhyme label="c" type="m" corresp="#s3:l6">niet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Bevolen zijt den <rhyme label="a" type="m">Heer</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Och! mijn lieve <rhyme label="b" type="f">beminden</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Ghy sult nu nemen <rhyme label="a" type="m" corresp="#s4:l1">keer</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Godt wil u herten <rhyme label="b" type="f" corresp="#s4:l2">binden</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">En vrede laten <rhyme label="b" type="f" corresp="#s4:l2">vinden</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Voor sijn heyligh <rhyme label="c" type="m">aenschijn</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Op dat ghy eens <rhyme label="b" type="f" corresp="#s4:l2">ghesinden</rhyme></l>
        <l id="s4:l8" met="3" type="+-">Meught in der liefden <rhyme label="c" type="m" corresp="#s4:l6">zijn</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="5" type="+-">SChoone Hand, als leevend <rhyme label="a" type="m">Alabast</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">Met saffiere <rhyme label="b" type="f">schooten</rhyme>,</l>
        <l id="s1:l3" met="5" type="+-">Daar het blaaw op witte gronden <rhyme label="a" type="m" corresp="#s1:l1">wast</rhyme></l>
        <l id="s1:l4" met="3" type="+-">En te saam schiet <rhyme label="b" type="f" corresp="#s1:l2">looten</rhyme>;</l>
        <l id="s1:l5" met="3" type="+-">Gy verblind mijn <rhyme label="c" type="f">oogen</rhyme>,</l>
        <l id="s1:l6" met="2" type="+-">Gy sticht <rhyme label="d" type="m">smart</rhyme></l>
        <l id="s1:l7" met="3" type="-+">In 't binnenst van mijn <rhyme label="d" type="m" corresp="#s1:l6">hart</rhyme>,</l>
        <l id="s1:l8" met="3" type="+-">En doet my <rhyme label="c" type="f" corresp="#s1:l5">aâmtoogen</rhyme>.</l>
        <l id="s1:l9" met="3" type="+-">En doet my <rhyme label="c" type="f" corresp="#s1:l5">aâmtoogen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="5" type="+-">Hoe durst gy ô schoone <rhyme label="a" type="m">Diamant</rhyme></l>
        <l id="s2:l2" met="3" type="+-">Aan haar pinkje <rhyme label="b" type="f">pronkken</rhyme>?</l>
        <l id="s2:l3" met="5" type="+-">Al uw glans vlucht dadelijk aan <rhyme label="a" type="m" corresp="#s2:l1">kant</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">Wen haar oog schiet <rhyme label="b" type="f" corresp="#s2:l2">lonkken</rhyme>.</l>
        <l id="s2:l5" met="3" type="+-">Neem een bruynder <rhyme label="c" type="f">luyster</rhyme></l>
        <l id="s2:l6" met="2" type="+-">Na mijn <rhyme label="d" type="m">raad</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Want of gy helder <rhyme label="d" type="m" corresp="#s2:l6">staat</rhyme>,</l>
        <l id="s2:l8" met="3" type="+-">By haar word gy <rhyme label="c" type="f" corresp="#s2:l5">duyster</rhyme>.</l>
        <l id="s2:l9" met="3" type="+-">By haar word gy <rhyme label="c" type="f" corresp="#s2:l5">duyster</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="5" type="+-">Peerle-snoer, onschatbaar in <rhyme label="a" type="m">waardy</rhyme>,</l>
        <l id="s3:l2" met="3" type="+-">Poogt gy die te <rhyme label="b" type="f">cieren</rhyme>?</l>
        <l id="s3:l3" met="5" type="+-">Ik sal noyt uw seeven-dubble <rhyme label="a" type="m" corresp="#s3:l1">ry</rhyme></l>
        <l id="s3:l4" met="3" type="+-">Vol uyt kunnen <rhyme label="b" type="f" corresp="#s3:l2">vieren</rhyme>.</l>
        <l id="s3:l5" met="3" type="+-">Want haar witte <rhyme label="c" type="f">handen</rhyme>,</l>
        <l id="s3:l6" met="2" type="+-">Spijt de <rhyme label="d" type="m">Melk</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Ontluysteren u <rhyme label="d" type="m" corresp="#s3:l6">elk</rhyme>,</l>
        <l id="s3:l8" met="3" type="+-">En doen u maar <rhyme label="c" type="f" corresp="#s3:l5">schanden</rhyme>.</l>
        <l id="s3:l9" met="3" type="+-">En doen u maar <rhyme label="c" type="f" corresp="#s3:l5">schanden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="5" type="+-">Ik heb lest die blankke hand <rhyme label="a" type="m">gekust</rhyme>,</l>
        <l id="s4:l2" met="3" type="+-">En was flux vol <rhyme label="b" type="f">minne</rhyme>:</l>
        <l id="s4:l3" met="5" type="+-">Och wat word mijn breyn noch <rhyme label="a" type="m" corresp="#s4:l1">ongerust</rhyme>,</l>
        <l id="s4:l4" met="3" type="+-">Eer ik weer-min <rhyme label="b" type="f" corresp="#s4:l2">vinne</rhyme>.</l>
        <l id="s4:l5" met="3" type="+-">Maar ik troost mijn <rhyme label="c" type="f">tijden</rhyme>,</l>
        <l id="s4:l6" met="2" type="+-">En wil <rhyme label="d" type="m">om</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Haar Hand en <rhyme label="d" type="m" corresp="#s4:l6">Maagde-blom</rhyme></l>
        <l id="s4:l8" met="3" type="+-">Wel veel droef heyd <rhyme label="c" type="f" corresp="#s4:l5">lijden</rhyme>.</l>
        <l id="s4:l9" met="3" type="+-">Wel veel droef heyd <rhyme label="c" type="f" corresp="#s4:l5">lijden</rhyme>.</l>
      </lg>
    </lg>
  </text>

    <location>
      <orginal-name>hoorn</orginal-name>
      <standard-name>Hoorn, The Netherlands</standard-name>
      <coordinates>
        <lon>52.653272</lon>
        <lat>5.0735802</lat>
      </coordinates>
    </location>
    <tags/>
    <melody>Dat alle bergen goud waren</melody>
  <author>Cornelis Maertsz.</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DE Joden, met soo bitt'ren <rhyme label="a" type="m">stem</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Als haer <rhyme label="b" type="m">door-galde-spons</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Die kreten in <rhyme label="a" type="m" corresp="#s1:l1">Jerusalem</rhyme>:</l>
        <l id="s1:l4" met="4" type="-+">Packt Jesus wegh, en kruycicht <rhyme label="a" type="m" corresp="#s1:l1">hem</rhyme>:</l>
        <l id="s1:l5" met="3" type="-+">Sijn Bloet dat zy op <rhyme label="b" type="m" corresp="#s1:l2">Ons</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">De weer-klanck van dat <rhyme label="a" type="m">Moort-gheschrey</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Rontom Jerus'lem <rhyme label="b" type="m">vloogh</rhyme></l>
        <l id="s2:l3" met="4" type="-+">En wenteld over Bergh en <rhyme label="a" type="m" corresp="#s2:l1">v'ley</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">En schoot ten lesten tusschen <rhyme label="a" type="m" corresp="#s2:l1">bey</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Door 't Wolcken-spoor om <rhyme label="b" type="m" corresp="#s2:l2">hoogh</rhyme>:</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Daer quam 't ghetier der Joodtsche <rhyme label="a" type="m">spraeck</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Voor d' hooghste Richter <rhyme label="b" type="m">staen</rhyme> !</l>
        <l id="s3:l3" met="4" type="-+">Diens toorn ontstack om dese <rhyme label="a" type="m" corresp="#s3:l1">saeck</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">En sondt terstont sijn snelle <rhyme label="a" type="m" corresp="#s3:l1">wraeck</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Ghewapent op haer <rhyme label="b" type="m" corresp="#s3:l2">aen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">De Pijlen die de Heer hem <rhyme label="a" type="m">gaf</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Vol doodelijcke <rhyme label="b" type="m">kracht</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Die schoot hy op besned'nen <rhyme label="a" type="m" corresp="#s4:l1">af</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">En heeft alsoo door straf op <rhyme label="a" type="m" corresp="#s4:l1">straf</rhyme></l>
        <l id="s4:l5" met="3" type="-+">In jamm'ren haer <rhyme label="b" type="m" corresp="#s4:l2">versmacht</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Hier leydt een wonder ons <rhyme label="a" type="m">ontdeckt</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Vol wond'ren in hem <rhyme label="b" type="m">self</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Diens grootheydt dat hem verder <rhyme label="a" type="m" corresp="#s5:l1">streckt</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Als Aerdt en Zee: ja is <rhyme label="a" type="m" corresp="#s5:l1">ghereckt</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Als 't Sterren-rijck <rhyme label="b" type="m" corresp="#s5:l2">ghewelf</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Dit selfde bloedt dat Godes <rhyme label="a" type="m">toorn</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Op Jacobs zaedt <rhyme label="b" type="m">uytgoot</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Is 't heyl van yder <rhyme label="a" type="m" corresp="#s6:l1">uytverkoor'n</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">En brenght ons Godes gunst te <rhyme label="a" type="m" corresp="#s6:l1">voor'n</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">En redt ons van de <rhyme label="b" type="m" corresp="#s6:l2">doodt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Hier door met Godt bevreed, soo <rhyme label="a" type="m">leydt</rhyme></l>
        <l id="s7:l2" met="3" type="-+">De Ziel als op een <rhyme label="b" type="m">dons</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">En rust in Godes <rhyme label="a" type="m" corresp="#s7:l1">goedigheydt</rhyme>:</l>
        <l id="s7:l4" met="4" type="-+">Daerom mijn ziel oock dickmael <rhyme label="a" type="m" corresp="#s7:l1">seydt</rhyme>:</l>
        <l id="s7:l5" met="3" type="-+">Vw bloedt dat zy op <rhyme label="b" type="m" corresp="#s7:l2">ons</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

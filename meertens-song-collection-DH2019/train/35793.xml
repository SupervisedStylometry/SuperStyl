    <melody>Hoe lig ik hier in deze ellende</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Albertus Buitendyck</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">EYlaes! Ick toonde mijn <rhyme label="a" type="f">boosheden</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Hoe dwaes ick was, ende hoe <rhyme label="b" type="m">sot</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Dat ick niet altijdt al mijn <rhyme label="a" type="f" corresp="#s1:l1">leden</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Gegeven heb te dienen <rhyme label="b" type="m" corresp="#s1:l2">Godt</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">'k Volghde mijn lusten ende <rhyme label="c" type="f">sinnen</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Als doen die de Werelt <rhyme label="c" type="f" corresp="#s1:l5">beminnen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ick hoorde, laet de sonden <rhyme label="a" type="f">varen</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Maer dese ick voor antwoort <rhyme label="b" type="m">gaf</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Als ick sal wesen oudt van <rhyme label="a" type="f" corresp="#s2:l1">Iaren</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Dan sal ick loopen op een <rhyme label="b" type="m" corresp="#s2:l2">draf</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">Veel tijdt heb ick laten <rhyme label="c" type="f">passeeren</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Niet docht om deughden te <rhyme label="c" type="f" corresp="#s2:l5">vermeeren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">In mijnen jeught, of stercke <rhyme label="a" type="f">dagen</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Als ick 't minste of sterven <rhyme label="b" type="m">docht</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Kranckheydt seer groot in mijn haest <rhyme label="a" type="f" corresp="#s3:l1">sagen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Die mijn oock tot de doodt toe <rhyme label="b" type="m" corresp="#s3:l2">brocht</rhyme>:</l>
        <l id="s3:l5" met="4" type="-+">Door 't ontfangen van <rhyme label="c" type="f">Sacramenten</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Ben ick ontgaen d'Helsche <rhyme label="c" type="f" corresp="#s3:l5">tormenten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Maer doe na Godts groote <rhyme label="a" type="f">genaden</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">'k Ben verwesen tot sulcken <rhyme label="b" type="m">brandt</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Om in het vyer soo langh te <rhyme label="a" type="f" corresp="#s4:l1">braden</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Tot dat ick hulp krijgh, en <rhyme label="b" type="m" corresp="#s4:l2">bystant</rhyme>.</l>
        <l id="s4:l5" met="4" type="-+">Ey! Vrinden toont hulp en <rhyme label="c" type="f">genaden</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Aen my, die is met pijn <rhyme label="c" type="f" corresp="#s4:l5">beladen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Aenhoort de swaerheydt van mijn <rhyme label="a" type="f">pijne</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Die is soo swaer, ende soo <rhyme label="b" type="m">hart</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Dat 's werelts pijn, geen pijne <rhyme label="a" type="f" corresp="#s5:l1">schijnen</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Vergeleecken by mijne <rhyme label="b" type="m" corresp="#s5:l2">smart</rhyme>:</l>
        <l id="s5:l5" met="4" type="-+">Ia, geen menschen konnen <rhyme label="c" type="f">verhalen</rhyme></l>
        <l id="s5:l6" met="4" type="-+">Wat lijd, die in 't Vagevyer <rhyme label="c" type="f" corresp="#s5:l5">dalen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Dat ick Godts aenschijn niet <rhyme label="a" type="f">aenschouwe</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Dese pijn is uw' <rhyme label="b" type="m">onbekent</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Dit brenght my aen de meeste <rhyme label="a" type="f" corresp="#s6:l1">rouwe</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Hierom mijn hulp, en bystandt <rhyme label="b" type="m" corresp="#s6:l2">sendt</rhyme>.</l>
        <l id="s6:l5" met="4" type="-+">Ontfermt my, ontfermt ghy mijn <rhyme label="c" type="f">vrinden</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Laet ick u Liefde en hulp <rhyme label="c" type="f" corresp="#s6:l5">vinden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Als ghy hoort een misdadigh <rhyme label="a" type="f">kermen</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Als de Beul hem pijnight of <rhyme label="b" type="m">slaet</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Over dese sult ghy <rhyme label="a" type="f" corresp="#s7:l1">ontfermen</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Wenst dat de Rechter hem los <rhyme label="b" type="m" corresp="#s7:l2">laet</rhyme>.</l>
        <l id="s7:l5" met="4" type="-+">Als 't Beest leyt onder 't pack <rhyme label="c" type="f">geladen</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Dat helpt ghy op, na Godes <rhyme label="c" type="f" corresp="#s7:l5">Raden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Sult ghy in mijn swaerste <rhyme label="a" type="f">ellenden</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Die ick al hier nu lijden <rhyme label="b" type="m">moet</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Geen troost, geen hulp, geen by-stant <rhyme label="a" type="f" corresp="#s8:l1">senden</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Soo leert wat 't een Beest, 't ander <rhyme label="b" type="m" corresp="#s8:l2">doet</rhyme>.</l>
        <l id="s8:l5" met="4" type="-+">Beesten in noot hare <rhyme label="c" type="f">gelijcken</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Malkander helpen g'lijck sal <rhyme label="c" type="f" corresp="#s8:l5">blijcken</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Als in een diepten is <rhyme label="a" type="f">gevalle</rhyme></l>
        <l id="s9:l2" met="4" type="-+">'t Panther-gedier, of <rhyme label="b" type="m">Olyfant</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Dan komen d'ander met hulp <rhyme label="a" type="f" corresp="#s9:l1">alle</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Verlossen dit <rhyme label="b" type="m" corresp="#s9:l2">gelijckerhandt</rhyme>.</l>
        <l id="s9:l5" met="4" type="-+">Op den Vis Scarus wel wilt <rhyme label="c" type="f">letten</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Verlossen die zijn in de <rhyme label="c" type="f" corresp="#s9:l5">netten</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">In de Turcken, dit wilt <rhyme label="a" type="f">aenmercken</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">(Dienaers van hare <rhyme label="b" type="m">Mahometh</rhyme>,)</l>
        <l id="s10:l3" met="4" type="-+">Eenige dagen gaen ter <rhyme label="a" type="f" corresp="#s10:l1">Kercken</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Voor de Zielen doen haer <rhyme label="b" type="m" corresp="#s10:l2">gebedt</rhyme>:</l>
        <l id="s10:l5" met="4" type="-+">Vergeten niet haer <rhyme label="c" type="f">over-leden</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Soecken die t'helpen door <rhyme label="c" type="f" corresp="#s10:l5">gebeden</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Sult ghy, sult ghy dan <rhyme label="a" type="f">Catholijcken</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Uw' vrinden laten in de <rhyme label="b" type="m">pijn</rhyme>?</l>
        <l id="s11:l3" met="4" type="-+">Ghy doet dan met u wercken <rhyme label="a" type="f" corresp="#s11:l1">blijcken</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Veel wreeder als een Beest te <rhyme label="b" type="m" corresp="#s11:l2">zijn</rhyme>.</l>
        <l id="s11:l5" met="4" type="-+">Met hulp wilt haer liefde <rhyme label="c" type="f">betoonen</rhyme></l>
        <l id="s11:l6" met="4" type="-+">Dat wy raecken tot 's Hemels <rhyme label="c" type="f" corresp="#s11:l5">throonen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Geschiedt zijn eertijdts <rhyme label="a" type="f">Offerhanden</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Door de Machabeusche <rhyme label="b" type="m">Iudas</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Voor die in dit vyer moste <rhyme label="a" type="f" corresp="#s12:l1">branden</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Om hare Zielen t' helpen <rhyme label="b" type="m" corresp="#s12:l2">ras</rhyme>.</l>
        <l id="s12:l5" met="4" type="-+">'t Is saligh te storten <rhyme label="c" type="f">gebeden</rhyme></l>
        <l id="s12:l6" met="4" type="-+">Voor die in Godt zijn <rhyme label="c" type="f" corresp="#s12:l5">overleden</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Als ghy de Zieltjens hebt <rhyme label="a" type="f">bewesen</rhyme></l>
        <l id="s13:l2" met="4" type="-+">Bystant in hare pijn en <rhyme label="b" type="m">noot</rhyme>;</l>
        <l id="s13:l3" met="4" type="-+">Als sy door u hulp zijn <rhyme label="a" type="f" corresp="#s13:l1">verresen</rhyme></l>
        <l id="s13:l4" met="4" type="-+">Tot haer ghewenste blijdtschap <rhyme label="b" type="m" corresp="#s13:l2">groot</rhyme>;</l>
        <l id="s13:l5" met="4" type="-+">Sy sullen u geensins <rhyme label="c" type="f">vergeten</rhyme>,</l>
        <l id="s13:l6" met="4" type="-+">Want sy al u weldaden <rhyme label="c" type="f" corresp="#s13:l5">weten</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Wilt ghy ontgaen haer pijn en <rhyme label="a" type="f">smarten</rhyme>?</l>
        <l id="s14:l2" met="4" type="-+">Liefde bemint en hout <rhyme label="b" type="m">eendracht</rhyme>;</l>
        <l id="s14:l3" met="4" type="-+">En laet geen sonden in u <rhyme label="a" type="f" corresp="#s14:l1">harten</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">Na deughden, en goe wercken <rhyme label="b" type="m" corresp="#s14:l2">tracht</rhyme></l>
        <l id="s14:l5" met="4" type="-+">Voldoet Godts ende Kerckx <rhyme label="c" type="f">geboden</rhyme>,</l>
        <l id="s14:l6" met="4" type="-+">Tot d' Hemel Jesus uw sal <rhyme label="c" type="f" corresp="#s14:l5">nooden</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Jesu wy vallen voor u <rhyme label="a" type="f">voeten</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">Bidden: hout op u slaende <rhyme label="b" type="m">hant</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">En wilt der zieltjens pijn <rhyme label="a" type="f" corresp="#s15:l1">versoeten</rhyme>,</l>
        <l id="s15:l4" met="4" type="-+">En verlost haer al uyt de <rhyme label="b" type="m" corresp="#s15:l2">brant</rhyme>,</l>
        <l id="s15:l5" met="4" type="-+">Want u hierom wy alle <rhyme label="c" type="f">smeecken</rhyme>,</l>
        <l id="s15:l6" met="4" type="-+">Die hier zijn, soo Klercken als <rhyme label="c" type="f" corresp="#s15:l5">Leecken</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Jesu voor u wy <rhyme label="a" type="f">neder-knielen</rhyme>:</l>
        <l id="s16:l2" met="4" type="-+">Ontreckt niet langher u <rhyme label="b" type="m">Aenschijn</rhyme>,</l>
        <l id="s16:l3" met="4" type="-+">Van al de geloovige <rhyme label="a" type="f" corresp="#s16:l1">zielen</rhyme>,</l>
        <l id="s16:l4" met="4" type="-+">Want sy wenschen by u te <rhyme label="b" type="m" corresp="#s16:l2">zijn</rhyme>:</l>
        <l id="s16:l5" met="4" type="-+">En laet haer u glory <rhyme label="c" type="f">ontfangen</rhyme></l>
        <l id="s16:l6" met="4" type="-+">Sy sullen u loven met <rhyme label="c" type="f" corresp="#s16:l5">sanghen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

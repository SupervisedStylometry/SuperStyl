  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DOet my genade, lieve <rhyme label="a" type="m">Godt</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Nae dyne gunst en rijcken <rhyme label="b" type="f">segen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Ick heb ghebroken u <rhyme label="a" type="m" corresp="#s1:l1">ghebodt</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">En daerom groot verdriet <rhyme label="b" type="f" corresp="#s1:l2">ghekregen</rhyme>:</l>
        <l id="s1:l5" met="2" type="-+">Maect, Heere, <rhyme label="c" type="m">my</rhyme></l>
        <l id="s1:l6" met="2" type="-+">Van sonden <rhyme label="c" type="m" corresp="#s1:l5">vry</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">En leyt my naer u reyne <rhyme label="b" type="f" corresp="#s1:l2">wegen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Mijn sonde wrought my aen de <rhyme label="a" type="m">ziel</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">En staegh soo voel ick mijn <rhyme label="b" type="f">ghebreken</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Dies isset dat ick <rhyme label="a" type="m" corresp="#s2:l1">neder-kniel</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">En ken my weert te sijn <rhyme label="b" type="f" corresp="#s2:l2">versteken</rhyme>;</l>
        <l id="s2:l5" met="2" type="-+">VVant van u, <rhyme label="c" type="m">Heer</rhyme>,</l>
        <l id="s2:l6" met="2" type="-+">En uwer <rhyme label="c" type="m" corresp="#s2:l5">leer</rhyme></l>
        <l id="s2:l7" met="4" type="-+">Ben ick gansch leelick <rhyme label="b" type="f" corresp="#s2:l2">afgeweken</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ick ben eylaes uyt sondigh <rhyme label="a" type="m">zaet</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">En van een swacke vrou <rhyme label="b" type="f">gheboren</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Dies helt mijn hert naer enckel <rhyme label="a" type="m" corresp="#s3:l1">quaet</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">En sonder u ben ick <rhyme label="b" type="f" corresp="#s3:l2">verloren</rhyme>;</l>
        <l id="s3:l5" met="2" type="-+">O! heelt myn <rhyme label="c" type="m">smert</rhyme></l>
        <l id="s3:l6" met="2" type="-+">En wast myn <rhyme label="c" type="m" corresp="#s3:l5">hert</rhyme></l>
        <l id="s3:l7" met="4" type="-+">Soo sal ick syn dijn <rhyme label="b" type="f" corresp="#s3:l2">uytverkoren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Laet my ghenieten uwe <rhyme label="a" type="m">vreught</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Soo sal mijn ziel van druck <rhyme label="b" type="f">ontwaken</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Laet my lust vinden in de <rhyme label="a" type="m" corresp="#s4:l1">deught</rhyme>.</l>
        <l id="s4:l4" met="4" type="-+">Soo sal ick uwe gunst <rhyme label="b" type="f" corresp="#s4:l2">ghenaken</rhyme>:</l>
        <l id="s4:l5" met="2" type="-+">Soo sal ick, <rhyme label="c" type="m">Heer</rhyme>,</l>
        <l id="s4:l6" met="2" type="-+">V lof en <rhyme label="c" type="m" corresp="#s4:l5">eer</rhyme></l>
        <l id="s4:l7" met="4" type="-+">Door al de werelt kondigh <rhyme label="b" type="f" corresp="#s4:l2">maken</rhyme>,</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">O God went toch u <rhyme label="a" type="m">aengesicht</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Van myn ghebreck en sware <rhyme label="b" type="f">sonden</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">En stort in my dijn heyligh <rhyme label="a" type="m" corresp="#s5:l1">licht</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Soo sal ick suyver zyn <rhyme label="b" type="f" corresp="#s5:l2">bevonden</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">Soo sal myn <rhyme label="c" type="m">geest</rhyme></l>
        <l id="s5:l6" met="2" type="-+">Syn <rhyme label="c" type="m" corresp="#s5:l5">onbevreest</rhyme></l>
        <l id="s5:l7" met="4" type="-+">Tot u te naken t'aller <rhyme label="b" type="f" corresp="#s5:l2">stonden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Comt schept in my een nieu <rhyme label="a" type="m">ghemoet</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">En stiert my tot een beter <rhyme label="b" type="f">leven</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Op dat mijn geest, door weligh <rhyme label="a" type="m" corresp="#s6:l1">bloet</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Niet meer tot lust en zy <rhyme label="b" type="f" corresp="#s6:l2">gedreven</rhyme>;</l>
        <l id="s6:l5" met="2" type="-+">Verstoot my <rhyme label="c" type="m">niet</rhyme></l>
        <l id="s6:l6" met="2" type="-+">In dit <rhyme label="c" type="m" corresp="#s6:l5">verdriet</rhyme></l>
        <l id="s6:l7" met="4" type="-+">Maer wilt my troost en segen <rhyme label="b" type="f" corresp="#s6:l2">geven</rhyme>,</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Dan sal ick die u <rhyme label="a" type="m">tegenstaen</rhyme></l>
        <l id="s7:l2" met="4" type="-+">V reyn verbont en wetten <rhyme label="b" type="f">leeren</rhyme>.</l>
        <l id="s7:l3" met="4" type="-+">Op datse beter wegen <rhyme label="a" type="m" corresp="#s7:l1">gaen</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">En sich in ware daet <rhyme label="b" type="f" corresp="#s7:l2">bekeeren</rhyme>:</l>
        <l id="s7:l5" met="2" type="-+">Dit schuldigh <rhyme label="c" type="m">bloet</rhyme></l>
        <l id="s7:l6" met="2" type="-+">Doch van my <rhyme label="c" type="m" corresp="#s7:l5">doet</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">Soo sal myn tongh u naem <rhyme label="b" type="f" corresp="#s7:l2">vereeren</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Onsluyt myn mont en mynen <rhyme label="a" type="m">geeft</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Op dat u lof daer uyt mach <rhyme label="b" type="f">rijsen</rhyme>;</l>
        <l id="s8:l3" met="4" type="-+">Het offer-werck van eenigh <rhyme label="a" type="m" corresp="#s8:l1">beest</rhyme></l>
        <l id="s8:l4" met="4" type="-+">En kan u, God, geen eer <rhyme label="b" type="f" corresp="#s8:l2">bewijsen</rhyme>;</l>
        <l id="s8:l5" met="2" type="-+">Een droef <rhyme label="c" type="m">gemoet</rhyme></l>
        <l id="s8:l6" met="2" type="-+">Dat boete <rhyme label="c" type="m" corresp="#s8:l5">doet</rhyme></l>
        <l id="s8:l7" met="4" type="-+">Dien offer sult ghy noyt <rhyme label="b" type="f" corresp="#s8:l2">misprijsen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Doet Sion deught, o lieve <rhyme label="a" type="m">Godt</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Nae dijne gunst seer <rhyme label="b" type="f">goedertieren</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Dan salmen eerst naer u <rhyme label="a" type="m" corresp="#s9:l1">ghebodt</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Met offert uwen autaer <rhyme label="b" type="f" corresp="#s9:l2">cieren</rhyme>,</l>
        <l id="s9:l5" met="2" type="-+">Dan salmen, <rhyme label="c" type="m">Heer</rhyme>,</l>
        <l id="s9:l6" met="2" type="-+">Tot uwer <rhyme label="c" type="m" corresp="#s9:l5">eer</rhyme></l>
        <l id="s9:l7" met="4" type="-+">Gaen slachten t'puyck van reyne <rhyme label="b" type="f" corresp="#s9:l2">dieren</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

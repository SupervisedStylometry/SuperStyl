  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">NV welcke al haer Hoope <rhyme label="a" type="m">gaer</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Hier op den HEERE <rhyme label="b" type="f">stellen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Die blijven vast <rhyme label="a" type="m" corresp="#s1:l1">Onwanckelbaer</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Gheen Ong'luck mach haer <rhyme label="b" type="f" corresp="#s1:l2">quellen</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">T'gelooff voortaen blijft Oprecht <rhyme label="c" type="m">staen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Sterckheyt geeft haer de <rhyme label="d" type="f">HEERE</rhyme></l>
        <l id="s1:l7" met="4" type="-+">Dies sullen sy bestaen sy <rhyme label="e" type="m">vry</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Als Zyons Berch vol <rhyme label="d" type="f" corresp="#s1:l6">Eere</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Al om die Stadt <rhyme label="a" type="m">JErusalem</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Daer syn geheel veel <rhyme label="b" type="f">Berghen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Op dat de Vyandt niet in <rhyme label="a" type="m" corresp="#s2:l1">neem</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Den Wech haer te <rhyme label="b" type="f" corresp="#s2:l2">verwerghen</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">So gaet oock Godt in aller <rhyme label="c" type="m">Noot</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Syn G'loovich Volck <rhyme label="d" type="f">omgeven</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">En by haer staen altoos <rhyme label="e" type="m">voortaen</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Oock in het Eewich <rhyme label="d" type="f" corresp="#s2:l6">Leven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">GOdt is gerecht end Altoos <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Die sal niet blijven <rhyme label="b" type="f">laten</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Der Sondaer end Godloosen <rhyme label="a" type="m" corresp="#s3:l1">Roed</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Over syn Heyl'ge <rhyme label="b" type="f" corresp="#s3:l2">Vaten</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Op dat de Vroom in schand niet <rhyme label="c" type="m">coem</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Noch in gheen Sonden <rhyme label="d" type="f">valle</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Want Godt aff wendt dat met syn <rhyme label="e" type="m">Handt</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Behoedt die Vromen <rhyme label="d" type="f" corresp="#s3:l6">alle</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">O HEEr doet al den Vromen <rhyme label="a" type="m">wel</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Die int Ghelooff recht <rhyme label="b" type="f">Leven</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Maer die van dy Aff treden <rhyme label="a" type="m" corresp="#s4:l1">fel</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">En haer in Dwalingh' <rhyme label="b" type="f" corresp="#s4:l2">gheven</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Die sal Godt all' met t'qaed <rhyme label="c" type="m">ghetal</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Verwerpen end <rhyme label="d" type="f">verdrijven</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Maer Israel noch altijdt <rhyme label="e" type="m">sal</rhyme></l>
        <l id="s4:l8" met="3" type="-+">In s'Heeren Vrede <rhyme label="d" type="f" corresp="#s4:l6">blijven</rhyme>.</l>
      </lg>
    </lg>
  </text>

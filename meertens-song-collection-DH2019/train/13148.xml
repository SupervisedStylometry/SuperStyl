  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Siel in aller angst en <rhyme label="a" type="m">noot</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Vliet heen nae Christi Wonden <rhyme label="a" type="m" corresp="#s1:l1">root</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Besluyt u Christi wonden <rhyme label="b" type="m">in</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Daer sult ghy wel en seker <rhyme label="b" type="m" corresp="#s1:l3">zijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Den dorst u sal hier lessen <rhyme label="a" type="m">wel</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Vijf brunnen aller gnaden <rhyme label="a" type="m" corresp="#s2:l1">vol</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Geen honger sal sich laten <rhyme label="b" type="m">sien</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Daer sulcke vijf spijscamers <rhyme label="b" type="m" corresp="#s2:l3">zijn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Hier is o Siel dat hoogste <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Dat u kan troosten hert en <rhyme label="a" type="m" corresp="#s3:l1">moet</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Wt desen schatten jeder <rhyme label="b" type="m">man</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Hert wat begeert ghy vinden <rhyme label="b" type="m" corresp="#s3:l3">kan</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">O Siel mijn Siel gelovet <rhyme label="a" type="m">vrij</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Dat hier der ware Hemel <rhyme label="a" type="m" corresp="#s4:l1">zy</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Daerom o Siel, maeckt dat u <rhyme label="b" type="m">liefd</rhyme></l>
        <l id="s4:l4" met="4" type="-+">In Christi Wonden woon en <rhyme label="b" type="m" corresp="#s4:l3">blijf</rhyme>.</l>
      </lg>
    </lg>
  </text>

    <melody>Nun bitten wir den heiligen Geist</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Nv bidden wy den heyligen <rhyme label="a" type="m">Geest</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">In den rechten gloven <rhyme label="a" type="m" corresp="#s1:l1">aldermeest</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Dat hy ons behoede, aen onseren <rhyme label="b" type="f">ende</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Als wy heen varen wt desen <rhyme label="b" type="f" corresp="#s1:l3">ellende</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Kyrie <rhyme label="c" type="f">eleison</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Verlicht doch ons o eewigh <rhyme label="a" type="m">licht</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Geeft dat also van ons <rhyme label="a" type="m" corresp="#s2:l1">geschiet</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Godt sy gevallich door Iesum <rhyme label="b" type="f">Christum</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Die ons maect heylich door sijn <rhyme label="b" type="f" corresp="#s2:l3">Priesterdom</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Kyrie <rhyme label="c" type="f">eleison</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">O heylighste iefd en <rhyme label="a" type="m">goedigheyt</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Door u genaed ons hert <rhyme label="a" type="m" corresp="#s3:l1">bereydt</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Dat wy onseren naesten, Christelijck <rhyme label="b" type="f">lieven</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">End in uwen vreden eewich <rhyme label="b" type="f" corresp="#s3:l3">blijven</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Kyrie <rhyme label="c" type="f">eleison</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">O hoochster Trooster en waren <rhyme label="a" type="m">Godt</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Helpt ons getrouwlijck in aller <rhyme label="a" type="m" corresp="#s4:l1">noot</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Maeckt reyn ons leven, schenckt ons u <rhyme label="b" type="f">gaven</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Laet ons niet wijcken vant rechte <rhyme label="b" type="f" corresp="#s4:l3">geloove</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Kyrie <rhyme label="c" type="f">eleison</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

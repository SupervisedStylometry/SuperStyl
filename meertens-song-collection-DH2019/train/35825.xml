      <category translation="religion">godsdienst</category>
    </categories>
  <author>Albertus Buitendyck</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">LAet ons heden met liefde <rhyme label="a" type="m">versch</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Met d' yver vande <rhyme label="b" type="f">Mieren</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Dit feest van onse <rhyme label="a" type="m" corresp="#s1:l1">Patrooners</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Met lijf en ziel al <rhyme label="b" type="f" corresp="#s1:l2">vieren</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Want zy is in 's Hemels <rhyme label="c" type="f">throone</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Voor ons van Godes <rhyme label="c" type="f" corresp="#s1:l5">Zoone</rhyme></l>
        <l id="s1:l7" met="2" type="-+">Krijght gracy <rhyme label="d" type="m">soet</rhyme></l>
        <l id="s1:l8" met="2" type="-+">In <rhyme label="d" type="m" corresp="#s1:l7">overvloet</rhyme>:</l>
        <l id="s1:l9" met="4" type="-+">Door haer gebeden ons <rhyme label="d" type="m" corresp="#s1:l7">behoedt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Hoe krachtigh dat by Godt den <rhyme label="a" type="m">Heer</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Zijn onse <rhyme label="b" type="f">Patroonersse</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Verkooren, of vernoemt wel <rhyme label="a" type="m" corresp="#s2:l1">eer</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Tot onse <rhyme label="b" type="f" corresp="#s2:l2">voorsprakersse</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">Mijn tongh noch handt kan <rhyme label="c" type="f">peylen</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Haer gront, noch zee door <rhyme label="c" type="f" corresp="#s2:l5">zyelen</rhyme>:</l>
        <l id="s2:l7" met="2" type="-+">'k Sal nochtans <rhyme label="d" type="m">yet</rhyme></l>
        <l id="s2:l8" met="2" type="-+">Sonder <rhyme label="d" type="m" corresp="#s2:l7">verdriet</rhyme></l>
        <l id="s2:l9" met="4" type="-+">Singen, dat ghy mijn goet hart <rhyme label="d" type="m" corresp="#s2:l7">siet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Als Leuven rontom was <rhyme label="a" type="m">beset</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Met duysende <rhyme label="b" type="f">Vyanden</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">(De Stad was als de Visch in 't <rhyme label="a" type="m" corresp="#s3:l1">net</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Als 't Lam in de Wolfs <rhyme label="b" type="f" corresp="#s3:l2">tanden</rhyme>)</l>
        <l id="s3:l5" met="3" type="-+">d' Inwoonders in die <rhyme label="c" type="f">tye</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Bidden Godt en <rhyme label="c" type="f" corresp="#s3:l5">Marye</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">Goods Moeder <rhyme label="d" type="m">klaer</rhyme></l>
        <l id="s3:l8" met="2" type="-+">Verthoonde <rhyme label="d" type="m" corresp="#s3:l7">haer</rhyme></l>
        <l id="s3:l9" met="4" type="-+">Als 't Sneeuw voor de Son smelt de <rhyme label="d" type="m" corresp="#s3:l7">schaer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Na dat Christus in 't <rhyme label="a" type="m">Hemelrijck</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Sint Aeghts ziel heeft <rhyme label="b" type="f">verheven</rhyme>;</l>
        <l id="s4:l3" met="4" type="-+">d' Engel stelt 't graf dicht by haer <rhyme label="a" type="m" corresp="#s4:l1">lijck</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Daer in was klaer <rhyme label="b" type="f" corresp="#s4:l2">geschreven</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">Zal 't Vader-landt <rhyme label="c" type="f">beschermen</rhyme>.</l>
        <l id="s4:l6" met="3" type="-+">Die van Catana <rhyme label="c" type="f" corresp="#s4:l5">kermen</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">Als tot haer <rhyme label="d" type="m">quam</rhyme></l>
        <l id="s4:l8" met="2" type="-+">Uyt Ethna <rhyme label="d" type="m" corresp="#s4:l7">vlam</rhyme>;</l>
        <l id="s4:l9" met="4" type="-+">'t Kleet van Sint Aeght de kracht <rhyme label="d" type="m" corresp="#s4:l7">benam</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Een Venhuyser Buys-stierman <rhyme label="a" type="m">goet</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Door dood lijcke <rhyme label="b" type="f">tempeesten</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Van snick tot snick de doodt <rhyme label="a" type="m" corresp="#s5:l1">ontmoet</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Als 't Schaep de wreeste <rhyme label="b" type="f" corresp="#s5:l2">Beesten</rhyme>:</l>
        <l id="s5:l5" met="3" type="-+">Belooft (teken 't met <rhyme label="c" type="f">trane</rhyme>:)</l>
        <l id="s5:l6" met="3" type="-+">Spaert ghy <rhyme label="c" type="f" corresp="#s5:l5">Emerentiane</rhyme></l>
        <l id="s5:l7" met="2" type="-+">My van dit <rhyme label="d" type="m">kruys</rhyme>,</l>
        <l id="s5:l8" met="2" type="-+">Een silv're <rhyme label="d" type="m" corresp="#s5:l7">buys</rhyme></l>
        <l id="s5:l9" met="4" type="-+">Sal geven; 't geschiet, hy komt <rhyme label="d" type="m" corresp="#s5:l7">t'huys</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">In het jaer veerthien hondert <rhyme label="a" type="m">acht</rhyme></l>
        <l id="s6:l2" met="3" type="-+">En veertigh, 't Gorcom <rhyme label="b" type="f">brande</rhyme></l>
        <l id="s6:l3" met="4" type="-+">'t Huys, op Sint Augustinus <rhyme label="a" type="m" corresp="#s6:l1">nacht</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Van Hendrick kock, sijn <rhyme label="b" type="f" corresp="#s6:l2">hande</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Braden en al sijn <rhyme label="c" type="f">leden</rhyme>.</l>
        <l id="s6:l6" met="3" type="-+">Sint Barber heeft <rhyme label="c" type="f" corresp="#s6:l5">gebeden</rhyme>:</l>
        <l id="s6:l7" met="2" type="-+">Wilt my by <rhyme label="d" type="m">staen</rhyme>;</l>
        <l id="s6:l8" met="2" type="-+">Sy heeft 't <rhyme label="d" type="m" corresp="#s6:l7">gedaen</rhyme>,</l>
        <l id="s6:l9" met="4" type="-+">Heeft 't heyligh Sacrament <rhyme label="d" type="m" corresp="#s6:l7">ontfaen</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">O Patronersse! van mijn <rhyme label="a" type="m">naem</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Van mijn staet, stadt en <rhyme label="b" type="f">Tempel</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Verkrijght dat ick worde <rhyme label="a" type="m" corresp="#s7:l1">bequaem</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Te volgen <rhyme label="b" type="f" corresp="#s7:l2">exempel</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">Want my u heyligh <rhyme label="c" type="f">leven</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Tot voorschrift is <rhyme label="c" type="f" corresp="#s7:l5">gegeven</rhyme>.</l>
        <l id="s7:l7" met="2" type="-+">Ã´ Maget <rhyme label="d" type="m">schoon</rhyme>!</l>
        <l id="s7:l8" met="2" type="-+">De Maeghde <rhyme label="d" type="m" corresp="#s7:l7">kroon</rhyme></l>
        <l id="s7:l9" met="4" type="-+">Verkrijght voor my in 's Hemels <rhyme label="d" type="m" corresp="#s7:l7">throon</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

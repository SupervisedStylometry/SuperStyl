    <melody>Gelobt seist du Jesu Christ</melody>
    <categories>
      <category translation="seasons and annual events">jaarkring</category>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">GHeeft ons nu God dat ons <rhyme label="a" type="m">ghesanck</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Met blijden ghelooue neme <rhyme label="a" type="m" corresp="#s1:l1">ganck</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Om u te wenschen een goet nieu <rhyme label="b" type="m">Jaer</rhyme>,</l>
        <l id="s1:l4" met="6" type="-+">En dat hyt met syn genade make waer. <rhyme label="c" type="m">Alleluya</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Geen mensch, noch staet hier wasdom <rhyme label="a" type="m">geeft</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Die Gods hulpe niet by hem <rhyme label="a" type="m" corresp="#s2:l1">heeft</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Om hem te leyden in aller <rhyme label="b" type="m">stont</rhyme>,</l>
        <l id="s2:l4" met="6" type="-+">Twelc my elck wenschen wt hertens gront. <rhyme label="c" type="m">Alleluya</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Der Ouericheyt dat sy haer <rhyme label="a" type="m">ghewelt</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Van Godt aenneme ende recht <rhyme label="a" type="m" corresp="#s3:l1">bestelt</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Godt gheue hem neersticheyt ende <rhyme label="b" type="m">moet</rhyme>,</l>
        <l id="s3:l4" met="6" type="-+">Om te beschermen dat recht is en goet. <rhyme label="c" type="m">Alleluya</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Dat sy oock doen dat Godt hier <rhyme label="a" type="m">prijst</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">En dat Christus ons leert en <rhyme label="a" type="m" corresp="#s4:l1">wijst</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Blyuende by syn woort seer <rhyme label="b" type="m">sterck</rhyme>,</l>
        <l id="s4:l4" met="6" type="-+">Op dat hem niet en rouwe haer werck. <rhyme label="c" type="m">Alleluya</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">God gheue tGhemeynte <rhyme label="a" type="m">gehoorsaemheyt</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Om tucht te vorderen met <rhyme label="a" type="m" corresp="#s5:l1">eerbaerheyt</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Oock ghemeyne liefde, met vredich <rhyme label="b" type="m">bedrijf</rhyme>,</l>
        <l id="s5:l4" met="6" type="-+">Dat een goet herte, hebbe een goet lijf. <rhyme label="c" type="m">Alleluya</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">VVy wenschen elck huys en tvolck daer <rhyme label="a" type="m">in</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Vredelijck leuen, en rechten <rhyme label="a" type="m" corresp="#s6:l1">sin</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Tot Godes lof, ende eere <rhyme label="b" type="m">altijt</rhyme>,</l>
        <l id="s6:l4" met="6" type="-+">Diet huys en hof ghebenedijt. <rhyme label="c" type="m">Alleluya</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">VVillich int dienen zijt trouwe en <rhyme label="a" type="m">stil</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Vreedsaem, zedich, nae Godes <rhyme label="a" type="m" corresp="#s7:l1">wil</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Christus die is oock uwen <rhyme label="b" type="m">knecht</rhyme>,</l>
        <l id="s7:l4" met="6" type="-+">Die dit gelooft die dienet recht. <rhyme label="c" type="m">Alleluya</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Die ghetrouwet leuen in vrede <rhyme label="a" type="m">rijck</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">En draghen lief en leet <rhyme label="a" type="m" corresp="#s8:l1">ghelijck</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Die zijn een vleesch, een herte en <rhyme label="b" type="m">gheest</rhyme>,</l>
        <l id="s8:l4" met="6" type="-+">Wil Godt ghenadich helpen meest. <rhyme label="c" type="m">Alleluya</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Ghy Jonghers leert eerst vreesen <rhyme label="a" type="m">Godt</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">En hout altijt syn heylich <rhyme label="a" type="m" corresp="#s9:l1">ghebodt</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Wilt wassen op, tuchtich <rhyme label="b" type="m">gheleert</rhyme>,</l>
        <l id="s9:l4" met="6" type="-+">Op dat ghi elck bely, en Christum eert. <rhyme label="c" type="m">Alleluya</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Die van herten, sinne, en <rhyme label="a" type="m">moet</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Om ons te leeren arbeyt <rhyme label="a" type="m" corresp="#s10:l1">doet</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Op dat wy leuen nae Godts <rhyme label="b" type="m">beuel</rhyme>,</l>
        <l id="s10:l4" met="6" type="-+">Den sal God helpen, en loonen wel. <rhyme label="c" type="m">Alleluya</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Die ionghe Ghesellen al <rhyme label="a" type="m">Ghemeyn</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Die Dochterkens oock die hout Godt <rhyme label="a" type="m" corresp="#s11:l1">reyn</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">En gheeft hun cuyscheyt in sin en <rhyme label="b" type="m">moet</rhyme>,</l>
        <l id="s11:l4" met="6" type="-+">Om te verwinnen vleesch en bloet. <rhyme label="c" type="m">Alleluya</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Ghy crancke met smerten beladen <rhyme label="a" type="m">swaer</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Nacht en dach in lijden <rhyme label="a" type="m" corresp="#s12:l1">eenpaer</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Godt gheef u ghedult tot aller <rhyme label="b" type="m">stont</rhyme>,</l>
        <l id="s12:l4" met="6" type="-+">En wil u maken van herten ghesont. <rhyme label="c" type="m">Alleluya</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Aenuechtinge, kerkren, droefheit, <rhyme label="a" type="m">geschrey</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Groote veruolghinghe <rhyme label="a" type="m" corresp="#s13:l1">menigherley</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Wilt willich lijden wel <rhyme label="b" type="m">bereyt</rhyme>,</l>
        <l id="s13:l4" met="6" type="-+">Godt helpt u draghen al sulck leyt. <rhyme label="c" type="m">Alleluya</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Godt wil u Armen gheuen in <rhyme label="a" type="m">noot</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">Wat u behoeuet, met daghelijcx <rhyme label="a" type="m" corresp="#s14:l1">broot</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Aen lijf ende siele <rhyme label="b" type="m">onghemist</rhyme>,</l>
        <l id="s14:l4" met="6" type="-+">En lijdtsaemheyt door Jhesum Christ. <rhyme label="c" type="m">Alleluya</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Die daghelijcks in den arbeyt <rhyme label="a" type="m">syn</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">Om wijf en kint te gheneren <rhyme label="a" type="m" corresp="#s15:l1">fyn</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">Den wenschen wy een goeden <rhyme label="b" type="m">spoet</rhyme>,</l>
        <l id="s15:l4" met="6" type="-+">Met Godes hulpe, diet al doet. <rhyme label="c" type="m">Alleluya</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Die tydelijck goet ende rijckdom <rhyme label="a" type="m">heeft</rhyme>,</l>
        <l id="s16:l2" met="4" type="-+">En daer by met sorghen <rhyme label="a" type="m" corresp="#s16:l1">leeft</rhyme>,</l>
        <l id="s16:l3" met="4" type="-+">Die deyle dat wt nae Christus <rhyme label="b" type="m">ghebot</rhyme>,</l>
        <l id="s16:l4" met="6" type="-+">Op dat hy rijcke sy by Godt. <rhyme label="c" type="m">Alleluya</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">En wilt oock soecken tghemeyn <rhyme label="a" type="m">profijt</rhyme>,</l>
        <l id="s17:l2" met="4" type="-+">Den armen helpet sonder <rhyme label="a" type="m" corresp="#s17:l1">respijt</rhyme>,</l>
        <l id="s17:l3" met="4" type="-+">En leert u kinderen dit <rhyme label="b" type="m">aduijs</rhyme>,</l>
        <l id="s17:l4" met="6" type="-+">Dat is den rijcken grooten prijs. <rhyme label="c" type="m">Alleluya</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Ghy sondaers soeckt dat eewich <rhyme label="a" type="m">deel</rhyme>,</l>
        <l id="s18:l2" met="4" type="-+">Dat u Godt die sonden vergheuet <rhyme label="a" type="m" corresp="#s18:l1">heel</rhyme>,</l>
        <l id="s18:l3" met="4" type="-+">Hy bekeer u al door syn woort <rhyme label="b" type="m">claer</rhyme>,</l>
        <l id="s18:l4" met="6" type="-+">En make u salich hier en daer. <rhyme label="c" type="m">Alleluya</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">Die ons met erenst tghelooue <rhyme label="a" type="m">leeren</rhyme>,</l>
        <l id="s19:l2" met="4" type="-+">Van valsche leere ende leuen <rhyme label="a" type="m" corresp="#s19:l1">keeren</rhyme>,</l>
        <l id="s19:l3" met="4" type="-+">En drijuen Godes woort ende <rhyme label="b" type="m">werck</rhyme>,</l>
        <l id="s19:l4" met="6" type="-+">Den gheue Godt syn ghenade sterck. <rhyme label="c" type="m">Alleluya</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">Dit wenschen wy van herten <rhyme label="a" type="m">al</rhyme>,</l>
        <l id="s20:l2" met="4" type="-+">Om Godt te behaghen in dit <rhyme label="a" type="m" corresp="#s20:l1">dal</rhyme>.</l>
        <l id="s20:l3" met="4" type="-+">Een eerlijck volck, en heylighe <rhyme label="b" type="m">stat</rhyme>,</l>
        <l id="s20:l4" met="6" type="-+">Die hem op Godt verlaten plat. <rhyme label="c" type="m">Alleluya</rhyme>.</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="4" type="-+">Syn Goddelijcke hant die sy ons <rhyme label="a" type="m">by</rhyme>,</l>
        <l id="s21:l2" met="4" type="-+">Bewarende ons van schanden <rhyme label="a" type="m" corresp="#s21:l1">vry</rhyme>,</l>
        <l id="s21:l3" met="4" type="-+">En gheue ghenadich veel Jaren <rhyme label="b" type="m">goet</rhyme>,</l>
        <l id="s21:l4" met="6" type="-+">Met syner liefde, in voorspoet. <rhyme label="c" type="m">Alleluya</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

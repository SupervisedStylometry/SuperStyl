  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O wreet en fel <rhyme label="a" type="f">begheven</rhyme>,</l>
        <l id="s1:l2" met="2" type="-+">O dach vol <rhyme label="b" type="m">pijn</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Och mocht ick sonder <rhyme label="a" type="f" corresp="#s1:l1">leven</rhyme></l>
        <l id="s1:l4" met="2" type="-+">Of liefde <rhyme label="b" type="m" corresp="#s1:l2">zijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Och mocht ick u <rhyme label="a" type="f">geleyden</rhyme></l>
        <l id="s2:l2" met="2" type="-+">Mijn schoone <rhyme label="b" type="m">zon</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Of dat wanneer wy <rhyme label="a" type="f" corresp="#s2:l1">scheyden</rhyme></l>
        <l id="s2:l4" met="2" type="-+">Ick sterven <rhyme label="b" type="m" corresp="#s2:l2">kon</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">De daghen sijn mijn <rhyme label="a" type="f">nachte</rhyme></l>
        <l id="s3:l2" met="2" type="-+">Als ick u <rhyme label="b" type="m">derf</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">De nacht vol duystere <rhyme label="a" type="f" corresp="#s3:l1">klachte</rhyme></l>
        <l id="s3:l4" met="2" type="-+">En droevigh <rhyme label="b" type="m" corresp="#s3:l2">erf</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Mijn mont en kan niet <rhyme label="a" type="f">mijden</rhyme></l>
        <l id="s4:l2" met="2" type="-+">Te suchten <rhyme label="b" type="m">staegh</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Betuyght het bittere <rhyme label="a" type="f" corresp="#s4:l1">lijden</rhyme></l>
        <l id="s4:l4" met="2" type="-+">Dat ick <rhyme label="b" type="m" corresp="#s4:l2">verdraegh</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">In 't kort die wil <rhyme label="a" type="f">aenschouwen</rhyme></l>
        <l id="s5:l2" met="2" type="-+">De <rhyme label="b" type="m">schildery</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Van troosteloos <rhyme label="a" type="f" corresp="#s5:l1">benouwen</rhyme></l>
        <l id="s5:l4" met="2" type="-+">Die siet op <rhyme label="b" type="m" corresp="#s5:l2">my</rhyme>.</l>
      </lg>
    </lg>
  </text>

    <melody>Mensen aanhoor mijn klagen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Albertus Buitendyck</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">CHristus sijn waerdste <rhyme label="a" type="f">Vrinden</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Hoe heyligh dat sy <rhyme label="b" type="m">zijn</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">(Soo wy daegh'lijcks <rhyme label="a" type="f" corresp="#s1:l1">bevinden</rhyme>)</l>
        <l id="s1:l4" met="3" type="-+">Met plagen ofte <rhyme label="b" type="m" corresp="#s1:l2">pijn</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Sal Vaderlijck <rhyme label="c" type="f">kastijden</rhyme>.</l>
        <l id="s1:l6" met="3" type="-+">Dit doet ons heden <rhyme label="d" type="m">klaer</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Bartholomëus <rhyme label="c" type="f" corresp="#s1:l5">lijden</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Bekennen en <rhyme label="c" type="f" corresp="#s1:l5">belijden</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Gelooven <rhyme label="d" type="m" corresp="#s1:l6">allegaer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Bartholomëus <rhyme label="a" type="f">noemen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Veel Doctoren <rhyme label="b" type="m">vermaert</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Nathanaël, wiens <rhyme label="a" type="f" corresp="#s2:l1">roemen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Christus ons <rhyme label="b" type="m" corresp="#s2:l2">openbaert</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">Nathanaël <rhyme label="c" type="f">waerachtigh</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Is een <rhyme label="d" type="m">Israëliet</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Wiens tonge <rhyme label="c" type="f" corresp="#s2:l5">leugenachtigh</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Noch hart bedrogh <rhyme label="c" type="f" corresp="#s2:l5">deelachtigh</rhyme></l>
        <l id="s2:l9" met="3" type="-+">Gebonden zijnen <rhyme label="d" type="m" corresp="#s2:l6">niet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Tot Apostel <rhyme label="a" type="f">verkooren</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Van Christus onse <rhyme label="b" type="m">Heer</rhyme>.</l>
        <l id="s3:l3" met="3" type="-+">Sijn stemme laet hy <rhyme label="a" type="f" corresp="#s3:l1">hooren</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Tot Godes lof en <rhyme label="b" type="m" corresp="#s3:l2">eer</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">In Indiaensche <rhyme label="c" type="f">Landen</rhyme></l>
        <l id="s3:l6" met="3" type="-+">By dagh en nachten <rhyme label="d" type="m">leert</rhyme>:</l>
        <l id="s3:l7" met="3" type="-+">Vreest pijn, vyer, doodt noch <rhyme label="c" type="f" corresp="#s3:l5">banden</rhyme>.</l>
        <l id="s3:l8" met="3" type="-+">Veel doolende <rhyme label="c" type="f" corresp="#s3:l5">verstanden</rhyme></l>
        <l id="s3:l9" met="3" type="-+">Tot 't Roomsch geloof <rhyme label="d" type="m" corresp="#s3:l6">bekeert</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Daer na is hy <rhyme label="a" type="f">gekomen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">In Armenien <rhyme label="b" type="m">groot</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">In een Kerck heeft <rhyme label="a" type="f" corresp="#s4:l1">vernomen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">d' Afgodt Astaroth <rhyme label="b" type="m" corresp="#s4:l2">snoot</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">Satan hier <rhyme label="c" type="f">aen-gebeden</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Hebben in plaets van <rhyme label="d" type="m">Godt</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Met ne'er-geboge <rhyme label="c" type="f" corresp="#s4:l5">leden</rhyme>.</l>
        <l id="s4:l8" met="3" type="-+">En Christus eer <rhyme label="c" type="f" corresp="#s4:l5">vertreden</rhyme>;</l>
        <l id="s4:l9" met="3" type="-+">Soo dwaes waren en <rhyme label="d" type="m" corresp="#s4:l6">sot</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Sijn kleed'ren niet <rhyme label="a" type="f">versleten</rhyme>.</l>
        <l id="s5:l2" met="3" type="-+">d' Eng'len waren by <rhyme label="b" type="m">hem</rhyme>;</l>
        <l id="s5:l3" met="3" type="-+">Hy weet veel Goods <rhyme label="a" type="f" corresp="#s5:l1">secreten</rhyme>:</l>
        <l id="s5:l4" met="3" type="-+">Soo luyt was sijnen <rhyme label="b" type="m" corresp="#s5:l2">stem</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Als eenige <rhyme label="c" type="f">trompetten</rhyme>.</l>
        <l id="s5:l6" met="3" type="-+">Leeft met een blijdt <rhyme label="d" type="m">gemoet</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Leeft heel na Godes <rhyme label="c" type="f" corresp="#s5:l5">Wetten</rhyme>.</l>
        <l id="s5:l8" met="3" type="-+">Gebede sonder <rhyme label="c" type="f" corresp="#s5:l5">smetten</rhyme></l>
        <l id="s5:l9" met="3" type="-+">By nacht en dagen <rhyme label="d" type="m" corresp="#s5:l6">doet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">d'Apostel heeft <rhyme label="a" type="f">benomen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Al Satans spraeck en <rhyme label="b" type="m">kracht</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Satan voor hem moet <rhyme label="a" type="f" corresp="#s6:l1">schromen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">En al de Helsche <rhyme label="b" type="m" corresp="#s6:l2">macht</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Polymius, <rhyme label="c" type="f">geheten</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Groot Coningh van dat <rhyme label="d" type="m">Landt</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Wiens dochter was <rhyme label="c" type="f" corresp="#s6:l5">beseten</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Als een Hont heeft <rhyme label="c" type="f" corresp="#s6:l5">gebeten</rhyme>,</l>
        <l id="s6:l9" met="3" type="-+">Wordt verlost door dees <rhyme label="d" type="m" corresp="#s6:l6">Sant</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">De Coningh hem <rhyme label="a" type="f">bekeerden</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Met sijn heel Conincx <rhyme label="b" type="m">hof</rhyme>:</l>
        <l id="s7:l3" met="3" type="-+">In 't openbaer Godt <rhyme label="a" type="f" corresp="#s7:l1">eerden</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Met grooten eer en <rhyme label="b" type="m" corresp="#s7:l2">lof</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">Daer na bekeerden <rhyme label="c" type="f">mede</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Noch menigh in 't <rhyme label="d" type="m">getal</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Ia, twalif heele <rhyme label="c" type="f" corresp="#s7:l5">Steden</rhyme>:</l>
        <l id="s7:l8" met="3" type="-+">Astaroth vroom <rhyme label="c" type="f" corresp="#s7:l5">vertreden</rhyme>,</l>
        <l id="s7:l9" met="3" type="-+">Laten haer doopen <rhyme label="d" type="m" corresp="#s7:l6">al</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">De Dienaers van <rhyme label="a" type="f">d'Afgoden</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Worden hierom <rhyme label="b" type="m">ontstelt</rhyme>.</l>
        <l id="s8:l3" met="3" type="-+">Astyages laet <rhyme label="a" type="f" corresp="#s8:l1">dooden</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Godes Tolck ende <rhyme label="b" type="m" corresp="#s8:l2">helt</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Van d'Apostel doet <rhyme label="c" type="f">snijden</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Al 't vel van 't vleysch en <rhyme label="d" type="m">be'en</rhyme>:</l>
        <l id="s8:l7" met="3" type="-+">In 't alderswaerste <rhyme label="c" type="f" corresp="#s8:l5">lijden</rhyme></l>
        <l id="s8:l8" met="3" type="-+">d' Apostel hem <rhyme label="c" type="f" corresp="#s8:l5">verblijden</rhyme>;</l>
        <l id="s8:l9" met="3" type="-+">Hy schijnt te zijn een <rhyme label="d" type="m" corresp="#s8:l6">steen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Sijn hooft met 't Swaert <rhyme label="a" type="f">af-klooven</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Sijn lichaem wordt een <rhyme label="b" type="m">lijck</rhyme>;</l>
        <l id="s9:l3" met="3" type="-+">Sijn ziel krijght 's Hemels <rhyme label="a" type="f" corresp="#s9:l1">hoven</rhyme>.</l>
        <l id="s9:l4" met="3" type="-+">Laet ons nu al <rhyme label="b" type="m" corresp="#s9:l2">gelijck</rhyme></l>
        <l id="s9:l5" met="3" type="-+">In onse pijn, en <rhyme label="c" type="f">plagen</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Bartholomeus <rhyme label="d" type="m">vel</rhyme></l>
        <l id="s9:l7" met="3" type="-+">Voor onse ooge <rhyme label="c" type="f" corresp="#s9:l5">dragen</rhyme>;</l>
        <l id="s9:l8" met="3" type="-+">Soo sulle wy niet <rhyme label="c" type="f" corresp="#s9:l5">klagen</rhyme></l>
        <l id="s9:l9" met="3" type="-+">Dat ons lijden is <rhyme label="d" type="m" corresp="#s9:l6">fel</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Apostel, hoogh <rhyme label="a" type="f">verheven</rhyme>!</l>
        <l id="s10:l2" met="3" type="-+">Maeckt dat wy d' oude <rhyme label="b" type="m">mensch</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">En 't vel van 't sondigh <rhyme label="a" type="f" corresp="#s10:l1">leven</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Uyt-recken na ons <rhyme label="b" type="m" corresp="#s10:l2">wensch</rhyme>.</l>
        <l id="s10:l5" met="3" type="-+">Satan van ons wilt <rhyme label="c" type="f">drijven</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Mede, o vroome <rhyme label="d" type="m">helt</rhyme>!</l>
        <l id="s10:l7" met="3" type="-+">Dat wy geloovigh <rhyme label="c" type="f" corresp="#s10:l5">blijven</rhyme>,</l>
        <l id="s10:l8" met="3" type="-+">In deughden al <rhyme label="c" type="f" corresp="#s10:l5">beklijven</rhyme>.</l>
        <l id="s10:l9" met="3" type="-+">Leyt ons in s' Hemels <rhyme label="d" type="m" corresp="#s10:l6">velt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Och Iesu! Heer der <rhyme label="a" type="f">Heeren</rhyme>!</l>
        <l id="s11:l2" met="3" type="-+">Wilt aen ons, Godes <rhyme label="b" type="m">Soon</rhyme>!</l>
        <l id="s11:l3" met="3" type="-+">Verduldigheyt <rhyme label="a" type="f" corresp="#s11:l1">vereeren</rhyme>.</l>
        <l id="s11:l4" met="3" type="-+">Maeckt onse zielen <rhyme label="b" type="m" corresp="#s11:l2">schoon</rhyme></l>
        <l id="s11:l5" met="3" type="-+">Van boosheydt ende <rhyme label="c" type="f">sonden</rhyme>;</l>
        <l id="s11:l6" met="3" type="-+">Dat wy met Lijf en <rhyme label="d" type="m">Geest</rhyme></l>
        <l id="s11:l7" met="3" type="-+">U dienen t' alle <rhyme label="c" type="f" corresp="#s11:l5">stonden</rhyme>,</l>
        <l id="s11:l8" met="3" type="-+">U Naem met hart en <rhyme label="c" type="f" corresp="#s11:l5">monden</rhyme></l>
        <l id="s11:l9" met="3" type="-+">Belijden <rhyme label="d" type="m" corresp="#s11:l6">onbevreest</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

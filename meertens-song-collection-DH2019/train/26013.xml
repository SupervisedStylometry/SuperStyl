  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Voorwaer t’dient niet <rhyme label="a" type="f">versweghen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Dees Weerelts blintheyt <rhyme label="b" type="m">groot</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Die manlijckheyt daer <rhyme label="a" type="f" corresp="#s1:l1">teghen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Der vromen tot der <rhyme label="b" type="m" corresp="#s1:l2">doot</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Soo dat claer is <rhyme label="c" type="f">ghebleken</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Tot Luyck int <rhyme label="d" type="m">openbaer</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Doe men schreef <rhyme label="c" type="f" corresp="#s1:l5">onbesweken</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Vijf en tneghentich <rhyme label="d" type="m" corresp="#s1:l6">Iaer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Twee vrome Christen <rhyme label="a" type="f">t’samen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Woonende in dat <rhyme label="b" type="m">landt</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Tot Soonhoven met <rhyme label="a" type="f" corresp="#s2:l1">namen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Seer velen wel <rhyme label="b" type="m" corresp="#s2:l2">bekant</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Die haer hadden <rhyme label="c" type="f">begheven</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Om Gods te dienen <rhyme label="d" type="m">recht</rhyme></l>
        <l id="s2:l7" met="3" type="-+">In een heylich nieu <rhyme label="c" type="f" corresp="#s2:l5">leven</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Naer d’Euangely <rhyme label="d" type="m" corresp="#s2:l6">slecht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">T’gheloof in Godt den <rhyme label="a" type="f">Vader</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Soon ende heylighen <rhyme label="b" type="m">Gheest</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Dat hadden sy te <rhyme label="a" type="f" corresp="#s3:l1">gader</rhyme></l>
        <l id="s3:l4" met="3" type="-+">In het minst ende <rhyme label="b" type="m" corresp="#s3:l2">meest</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Ghedoopt in Christi <rhyme label="c" type="f">name</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Op’t gheloof waren <rhyme label="d" type="m">sy</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Tot Liedekens <rhyme label="c" type="f" corresp="#s3:l5">bequame</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Aen het lichaem <rhyme label="d" type="m" corresp="#s3:l6">Christi</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Een Vrou, hoort dit <rhyme label="a" type="f">verclaren</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Aelke Baten <rhyme label="b" type="m">ghenaemt</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Van vierentwintich <rhyme label="a" type="f" corresp="#s4:l1">Iaren</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Een Maeght daer by <rhyme label="b" type="m" corresp="#s4:l2">versaemt</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Maeyken Wolters <rhyme label="c" type="f">gheheten</rhyme>:</l>
        <l id="s4:l6" met="3" type="-+">Als Iudas dit <rhyme label="d" type="m">vernam</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Liet hy’t den Heeren <rhyme label="c" type="f" corresp="#s4:l5">weten</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Die daerom worden <rhyme label="d" type="m" corresp="#s4:l6">gram</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Trappaerts sy daer <rhyme label="a" type="f">uytsonden</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Vinghen sy alle <rhyme label="b" type="m">beydt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Waer toe dat syse <rhyme label="a" type="f" corresp="#s5:l1">vonden</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Heel willich en <rhyme label="b" type="m" corresp="#s5:l2">bereydt</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Naer Luyck ginckmense <rhyme label="c" type="f">leyden</rhyme>:</l>
        <l id="s5:l6" met="3" type="-+">Maeyken sprack: om Gods <rhyme label="d" type="m">woort</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Wil ick dus liever <rhyme label="c" type="f" corresp="#s5:l5">scheyden</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Als t’huys gaen rechte <rhyme label="d" type="m" corresp="#s5:l6">voort</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">In den thoorn syse <rhyme label="a" type="f">brochten</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Van den <rhyme label="b" type="m">Officiael</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Daer syse hardt <rhyme label="a" type="f" corresp="#s6:l1">versochten</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Met dreyghen <rhyme label="b" type="m" corresp="#s6:l2">principael</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Met smeecken, loose <rhyme label="c" type="f">teeken</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Daer van den Menschen <rhyme label="d" type="m">doof</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Dit duerde heel thien <rhyme label="c" type="f" corresp="#s6:l5">weken</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Sy bleven by’t <rhyme label="d" type="m" corresp="#s6:l6">gheloof</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">In liefde vast <rhyme label="a" type="f">verbonden</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Des Bisschops <rhyme label="b" type="m">Cappellaen</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Brocht wijn als daer <rhyme label="a" type="f" corresp="#s7:l1">ghesonden</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Hy hadt die Dochter <rhyme label="b" type="m" corresp="#s7:l2">aen</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Op sijn knyen, wilt <rhyme label="c" type="f">mercken</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Dat sy doch afstaen <rhyme label="d" type="m">sou</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Volghen der Roomscher <rhyme label="c" type="f" corresp="#s7:l5">Kercken</rhyme>:</l>
        <l id="s7:l8" met="3" type="-+">Mser sy gantsch niet en <rhyme label="d" type="m" corresp="#s7:l6">wou</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Een Man uyt <rhyme label="a" type="f">medelijden</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Quam haer om gheven <rhyme label="b" type="m">raet</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Dat sy’t gheloof liet <rhyme label="a" type="f" corresp="#s8:l1">glijden</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">T’waer om haers levens <rhyme label="b" type="m" corresp="#s8:l2">baet</rhyme>:</l>
        <l id="s8:l5" met="3" type="-+">Soud’ ick nu Gods <rhyme label="c" type="f">versmaden</rhyme></l>
        <l id="s8:l6" met="3" type="-+">En worden s’Duyvels <rhyme label="d" type="m">kint</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Wilt ghy my dat wel <rhyme label="c" type="f" corresp="#s8:l5">raden</rhyme>?</l>
        <l id="s8:l8" met="3" type="-+">Sprack Maeyken wel <rhyme label="d" type="m" corresp="#s8:l6">ghesint</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Soo sult ghy sterven <rhyme label="a" type="f">moeten</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Besorgh ick, sprack de <rhyme label="b" type="m">Man</rhyme>:</l>
        <l id="s9:l3" met="3" type="-+">Sy sprack, om my <rhyme label="a" type="f" corresp="#s9:l1">versoeten</rhyme></l>
        <l id="s9:l4" met="3" type="-+">De lichte dach niet <rhyme label="b" type="m" corresp="#s9:l2">can</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Soo lief zijn, als ick <rhyme label="c" type="f">sterve</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Om Christi naem <rhyme label="d" type="m">certeyn</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">En hier den doot <rhyme label="c" type="f" corresp="#s9:l5">verwerve</rhyme></l>
        <l id="s9:l8" met="3" type="-+">T’sijner eeren <rhyme label="d" type="m" corresp="#s9:l6">alleyn</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Voor’t gheestelijck <rhyme label="a" type="f">gherichte</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Zijnse te recht <rhyme label="b" type="m">ghestelt</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Met vrolijcken <rhyme label="a" type="f" corresp="#s10:l1">ghesichte</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Lachende, t’dient <rhyme label="b" type="m" corresp="#s10:l2">vermelt</rhyme>:</l>
        <l id="s10:l5" met="3" type="-+">Als sy’t oordeel <rhyme label="c" type="f">ontfinghen</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Danckten sy Godt <rhyme label="d" type="m">voorwaer</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Haer herte deed’ <rhyme label="c" type="f" corresp="#s10:l5">ontspringhen</rhyme></l>
        <l id="s10:l8" met="3" type="-+">Al was haer lijden <rhyme label="d" type="m" corresp="#s10:l6">swaer</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Men gaffe daer in <rhyme label="a" type="f">handen</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Den Rechter van der <rhyme label="b" type="m">Wet</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Die namse daer in <rhyme label="a" type="f" corresp="#s11:l1">handen</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Als Weerelts Heer <rhyme label="b" type="m" corresp="#s11:l2">gheset</rhyme>:</l>
        <l id="s11:l5" met="3" type="-+">Haer handen vielen <rhyme label="c" type="f">swaerlijck</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Sy leden <rhyme label="d" type="m">onghemack</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">Nochtans in vreucht <rhyme label="c" type="f" corresp="#s11:l5">schijnbaerlijck</rhyme></l>
        <l id="s11:l8" met="3" type="-+">Haer herte daer <rhyme label="d" type="m" corresp="#s11:l6">ontstack</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Als sy dus hardt <rhyme label="a" type="f">ghevanghen</rhyme></l>
        <l id="s12:l2" met="3" type="-+">T’gheloof behielden <rhyme label="b" type="m">fijn</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Tormentlijck <rhyme label="a" type="f" corresp="#s12:l1">opghehanghen</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Sy seer ghepijnicht <rhyme label="b" type="m" corresp="#s12:l2">zijn</rhyme>:</l>
        <l id="s12:l5" met="3" type="-+">Dit hebben sy <rhyme label="c" type="f">verdraghen</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Daer nae met vreuchden <rhyme label="d" type="m">sanck</rhyme></l>
        <l id="s12:l7" met="3" type="-+">Ghesonghen sonder <rhyme label="c" type="f" corresp="#s12:l5">claghen</rhyme>,</l>
        <l id="s12:l8" met="3" type="-+">Gaven Godt prijs en <rhyme label="d" type="m" corresp="#s12:l6">danck</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Nu voor die Heeren <rhyme label="a" type="f">staende</rhyme></l>
        <l id="s13:l2" met="3" type="-+">Haer oordeel te <rhyme label="b" type="m">ontfaen</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Quamen twee vrienden <rhyme label="a" type="f" corresp="#s13:l1">gaende</rhyme></l>
        <l id="s13:l4" met="3" type="-+">Naer’t maechtschap toe <rhyme label="b" type="m" corresp="#s13:l2">ghedaen</rhyme>,</l>
        <l id="s13:l5" met="3" type="-+">Ael sprack: comt ghy in’t <rhyme label="c" type="f">trueren</rhyme></l>
        <l id="s13:l6" met="3" type="-+">Dus noch besoecken <rhyme label="d" type="m">coen</rhyme>,</l>
        <l id="s13:l7" met="3" type="-+">Corts binnen eender <rhyme label="c" type="f" corresp="#s13:l5">uren</rhyme></l>
        <l id="s13:l8" met="3" type="-+">Sullen wy ons offer <rhyme label="d" type="m" corresp="#s13:l6">doen</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Ick doe u seer <rhyme label="a" type="f">bedancken</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Segt doch mijn lieve <rhyme label="b" type="m">Man</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Dat hy doch sonder <rhyme label="a" type="f" corresp="#s14:l1">wancken</rhyme></l>
        <l id="s14:l4" met="3" type="-+">Wil soo veel als shy <rhyme label="b" type="m" corresp="#s14:l2">can</rhyme></l>
        <l id="s14:l5" met="3" type="-+">Mijn kinderkens <rhyme label="c" type="f">opbringhen</rhyme></l>
        <l id="s14:l6" met="3" type="-+">In Gods vrees’: Maetken <rhyme label="d" type="m">sacht</rhyme>,</l>
        <l id="s14:l7" met="3" type="-+">Mijn Ouders <rhyme label="c" type="f" corresp="#s14:l5">sonderlinghen</rhyme></l>
        <l id="s14:l8" met="3" type="-+">Den segt doch goeden <rhyme label="d" type="m" corresp="#s14:l6">nacht</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Een Raedtsheer hem seer <rhyme label="a" type="f">boeghde</rhyme></l>
        <l id="s15:l2" met="3" type="-+">Voor Maeyken, hy badt <rhyme label="b" type="m">haer</rhyme></l>
        <l id="s15:l3" met="3" type="-+">Dat sy haer nu noch <rhyme label="a" type="f" corresp="#s15:l1">voeghde</rhyme></l>
        <l id="s15:l4" met="3" type="-+">By die Papische <rhyme label="b" type="m" corresp="#s15:l2">schaer</rhyme>,</l>
        <l id="s15:l5" met="3" type="-+">Men soud’ haer t’leven <rhyme label="c" type="f">schincken</rhyme></l>
        <l id="s15:l6" met="3" type="-+">Soo sy wilde <rhyme label="d" type="m">afstaen</rhyme>,</l>
        <l id="s15:l7" met="3" type="-+">Dit mochtse wel <rhyme label="c" type="f" corresp="#s15:l5">bedincken</rhyme>,</l>
        <l id="s15:l8" met="3" type="-+">Anders moest oordeel <rhyme label="d" type="m" corresp="#s15:l6">gaen</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="3" type="-+">Aelke die sprack met <rhyme label="a" type="f">eeren</rhyme>,</l>
        <l id="s16:l2" met="3" type="-+">Sterven is ons <rhyme label="b" type="m">begeer</rhyme></l>
        <l id="s16:l3" met="3" type="-+">Nu om den naem des <rhyme label="a" type="f" corresp="#s16:l1">Heeren</rhyme></l>
        <l id="s16:l4" met="3" type="-+">En om sijn heylsaem <rhyme label="b" type="m" corresp="#s16:l2">leer</rhyme>,</l>
        <l id="s16:l5" met="3" type="-+">Als d’Apostelen <rhyme label="c" type="f">deden</rhyme>,</l>
        <l id="s16:l6" met="3" type="-+">Sy leden angst en <rhyme label="d" type="m">noot</rhyme>,</l>
        <l id="s16:l7" met="3" type="-+">Den willen wy nae <rhyme label="c" type="f" corresp="#s16:l5">treden</rhyme></l>
        <l id="s16:l8" met="3" type="-+">En gaen willich ter <rhyme label="d" type="m" corresp="#s16:l6">doot</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="3" type="-+">T’oordeel ginck sonder <rhyme label="a" type="f">mincken</rhyme></l>
        <l id="s17:l2" met="3" type="-+">Men soud’se binden <rhyme label="b" type="m">vast</rhyme>,</l>
        <l id="s17:l3" met="3" type="-+">En levende <rhyme label="a" type="f" corresp="#s17:l1">verdrincken</rhyme>,</l>
        <l id="s17:l4" met="3" type="-+">Dit werdt den beul <rhyme label="b" type="m" corresp="#s17:l2">belast</rhyme>:</l>
        <l id="s17:l5" met="3" type="-+">Doemense dede <rhyme label="c" type="f">dringhen</rhyme></l>
        <l id="s17:l6" met="3" type="-+">Wt die <rhyme label="d" type="m">ghevanckenis</rhyme>,</l>
        <l id="s17:l7" met="3" type="-+">Begonnen sy te <rhyme label="c" type="f" corresp="#s17:l5">singhen</rhyme>,</l>
        <l id="s17:l8" met="3" type="-+">Het was van vreuchde <rhyme label="d" type="m" corresp="#s17:l6">wis</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="3" type="-+">Eylaes ten mocht niet <rhyme label="a" type="f">dueren</rhyme>,</l>
        <l id="s18:l2" met="3" type="-+">Den mondt verbondt men <rhyme label="b" type="m">daer</rhyme>,</l>
        <l id="s18:l3" met="3" type="-+">Ginckse ter plaetsen <rhyme label="a" type="f" corresp="#s18:l1">vueren</rhyme></l>
        <l id="s18:l4" met="3" type="-+">Daer sy het offer <rhyme label="b" type="m" corresp="#s18:l2">claer</rhyme></l>
        <l id="s18:l5" met="3" type="-+">Nu souden gaen <rhyme label="c" type="f">volinden</rhyme></l>
        <l id="s18:l6" met="3" type="-+">Op die Maesbrugghe <rhyme label="d" type="m">bloot</rhyme>:</l>
        <l id="s18:l7" met="3" type="-+">Doe lieten sy haer <rhyme label="c" type="f" corresp="#s18:l5">binden</rhyme></l>
        <l id="s18:l8" met="3" type="-+">Als slachtschapen <rhyme label="d" type="m" corresp="#s18:l6">devoot</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="3" type="-+">Den mondt men doe <rhyme label="a" type="f">ontbonde</rhyme>,</l>
        <l id="s19:l2" met="3" type="-+">D’ooghen worden <rhyme label="b" type="m">verblent</rhyme>.</l>
        <l id="s19:l3" met="3" type="-+">Aelke sprack tot die’t <rhyme label="a" type="f" corresp="#s19:l1">stonde</rhyme></l>
        <l id="s19:l4" met="3" type="-+">Voor die waren <rhyme label="b" type="m" corresp="#s19:l2">ontrent</rhyme>,</l>
        <l id="s19:l5" met="3" type="-+">Suchtende met <rhyme label="c" type="f">clachreden</rhyme>:</l>
        <l id="s19:l6" met="3" type="-+">Dit’s wel een schoone <rhyme label="d" type="m">ste</rhyme></l>
        <l id="s19:l7" met="3" type="-+">Waert datse boete <rhyme label="c" type="f" corresp="#s19:l5">deden</rhyme></l>
        <l id="s19:l8" met="3" type="-+">Met die van <rhyme label="d" type="m" corresp="#s19:l6">Ninive</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="3" type="-+">Heeft haer ziel Godt <rhyme label="a" type="f">bevolen</rhyme>,</l>
        <l id="s20:l2" met="3" type="-+">Men wierpse over <rhyme label="b" type="m">t’boort</rhyme>,</l>
        <l id="s20:l3" met="3" type="-+">Standtvastich <rhyme label="a" type="f" corresp="#s20:l1">onverholen</rhyme></l>
        <l id="s20:l4" met="3" type="-+">Wordt sy aldaer <rhyme label="b" type="m" corresp="#s20:l2">versmoort</rhyme>,</l>
        <l id="s20:l5" met="3" type="-+">Haer ziele doet nu <rhyme label="c" type="f">rusten</rhyme></l>
        <l id="s20:l6" met="3" type="-+">Eeuwich in Godes <rhyme label="d" type="m">hant</rhyme>,</l>
        <l id="s20:l7" met="3" type="-+">En sal naemaels <rhyme label="c" type="f" corresp="#s20:l5">belusten</rhyme></l>
        <l id="s20:l8" met="3" type="-+">Op Syons bergh <rhyme label="d" type="m" corresp="#s20:l6">playsant</rhyme>.</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="3" type="-+">Als Maeyken werdt <rhyme label="a" type="f">ontbonden</rhyme>,</l>
        <l id="s21:l2" met="3" type="-+">Sprack sy den Hencker <rhyme label="b" type="m">toe</rhyme>,</l>
        <l id="s21:l3" met="3" type="-+">Dat hy haer woud’ <rhyme label="a" type="f" corresp="#s21:l1">vergonden</rhyme></l>
        <l id="s21:l4" met="3" type="-+">Godt aan te roepen <rhyme label="b" type="m" corresp="#s21:l2">soe</rhyme>:</l>
        <l id="s21:l5" met="3" type="-+">Hy sprack: bidt onsen <rhyme label="c" type="f">Heere</rhyme></l>
        <l id="s21:l6" met="3" type="-+">En volght die Roomsche <rhyme label="d" type="m">Kerck</rhyme>,</l>
        <l id="s21:l7" met="3" type="-+">V daghen te <rhyme label="c" type="f" corresp="#s21:l5">vermeeren</rhyme>,</l>
        <l id="s21:l8" met="3" type="-+">Daer toe ried’ hy haer <rhyme label="d" type="m" corresp="#s21:l6">sterck</rhyme>.</l>
      </lg>
      <lg id="s22" type="stanza">
        <l id="s22:l1" met="3" type="-+">Sy sprack: ick noyt <rhyme label="a" type="f">misdede</rhyme></l>
        <l id="s22:l2" met="3" type="-+">Hier deser <rhyme label="b" type="m">Majesteyt</rhyme>,</l>
        <l id="s22:l3" met="3" type="-+">Wat soud’ dan zijn mijn <rhyme label="a" type="f" corresp="#s22:l1">bede</rhyme>,</l>
        <l id="s22:l4" met="3" type="-+">Sy maeckte haer <rhyme label="b" type="m" corresp="#s22:l2">afscheyt</rhyme>,</l>
        <l id="s22:l5" met="3" type="-+">En sterf willich en <rhyme label="c" type="f">modich</rhyme></l>
        <l id="s22:l6" met="3" type="-+">Int gheloof <rhyme label="d" type="m">onbevleckt</rhyme>,</l>
        <l id="s22:l7" met="3" type="-+">Al was sy jonck en <rhyme label="c" type="f" corresp="#s22:l5">blodich</rhyme></l>
        <l id="s22:l8" met="3" type="-+">Ten heeft haer niet <rhyme label="d" type="m" corresp="#s22:l6">beschreckt</rhyme>.</l>
      </lg>
      <lg id="s23" type="stanza">
        <l id="s23:l1" met="3" type="-+">Sy is vroomlijck <rhyme label="a" type="f">verdroncken</rhyme></l>
        <l id="s23:l2" met="3" type="-+">Int water met <rhyme label="b" type="m">gheclach</rhyme>,</l>
        <l id="s23:l3" met="3" type="-+">Noch langhe niet <rhyme label="a" type="f" corresp="#s23:l1">ghesoncken</rhyme></l>
        <l id="s23:l4" met="3" type="-+">Soo men opentlijck <rhyme label="b" type="m" corresp="#s23:l2">sach</rhyme>:</l>
        <l id="s23:l5" met="3" type="-+">Sy bloeyde als een <rhyme label="c" type="f">roose</rhyme></l>
        <l id="s23:l6" met="3" type="-+">Daer sy op’t water <rhyme label="d" type="m">dreef</rhyme>,</l>
        <l id="s23:l7" met="3" type="-+">T’duerde een langhe <rhyme label="c" type="f" corresp="#s23:l5">poose</rhyme></l>
        <l id="s23:l8" met="3" type="-+">Eer datse onder <rhyme label="d" type="m" corresp="#s23:l6">bleef</rhyme>.</l>
      </lg>
      <lg id="s24" type="stanza">
        <l id="s24:l1" met="3" type="-+">De Heer salse <rhyme label="a" type="f">becleyden</rhyme></l>
        <l id="s24:l2" met="3" type="-+">Met het sneeu witte <rhyme label="b" type="m">cleyt</rhyme>,</l>
        <l id="s24:l3" met="3" type="-+">Daer mede salse <rhyme label="a" type="f" corresp="#s24:l1">beyden</rhyme>,</l>
        <l id="s24:l4" met="3" type="-+">En haer is <rhyme label="b" type="m" corresp="#s24:l2">toegheseyt</rhyme></l>
        <l id="s24:l5" met="3" type="-+">Eeuwich des levens <rhyme label="c" type="f">Croone</rhyme>,</l>
        <l id="s24:l6" met="3" type="-+">T’palmtaxken even <rhyme label="d" type="m">schoon</rhyme></l>
        <l id="s24:l7" met="3" type="-+">Die vreucht crijcht sy te <rhyme label="c" type="f" corresp="#s24:l5">loone</rhyme></l>
        <l id="s24:l8" met="3" type="-+">Eeuwicj in s’Hemels <rhyme label="d" type="m" corresp="#s24:l6">throon</rhyme>.</l>
      </lg>
      <lg id="s25" type="stanza">
        <l id="s25:l1" met="3" type="-+">Ghy Christen al <rhyme label="a" type="f">ghelijcke</rhyme></l>
        <l id="s25:l2" met="3" type="-+">Dit exempel <rhyme label="b" type="m">aensiet</rhyme>,</l>
        <l id="s25:l3" met="3" type="-+">Nimandt doch nu en <rhyme label="a" type="f" corresp="#s25:l1">wijcke</rhyme></l>
        <l id="s25:l4" met="3" type="-+">Al comt ghy int <rhyme label="b" type="m" corresp="#s25:l2">verdriet</rhyme>:</l>
        <l id="s25:l5" met="3" type="-+">Volght den Herder <rhyme label="c" type="f">ghepresen</rhyme></l>
        <l id="s25:l6" met="3" type="-+">Christum <rhyme label="d" type="m">ghebenedijt</rhyme>,</l>
        <l id="s25:l7" met="3" type="-+">Hy laet die zijn gheen <rhyme label="c" type="f" corresp="#s25:l5">wesen</rhyme></l>
        <l id="s25:l8" met="3" type="-+">Soo dese daer <rhyme label="d" type="m" corresp="#s25:l6">belijt</rhyme>.</l>
      </lg>
      <lg id="s26" type="stanza">
        <l id="s26:l1" met="3" type="-+">Ghy Heeren van den <rhyme label="a" type="f">Landen</rhyme></l>
        <l id="s26:l2" met="3" type="-+">Houdt op van deser <rhyme label="b" type="m">daet</rhyme>,</l>
        <l id="s26:l3" met="3" type="-+">Met verdrincken en <rhyme label="a" type="f" corresp="#s26:l1">branden</rhyme>,</l>
        <l id="s26:l4" met="3" type="-+">Rooven over die <rhyme label="b" type="m" corresp="#s26:l2">maet</rhyme>:</l>
        <l id="s26:l5" met="3" type="-+">Laet u soo niet <rhyme label="c" type="f">vervooren</rhyme></l>
        <l id="s26:l6" met="3" type="-+">Van uwen leyders <rhyme label="d" type="m">blindt</rhyme>,</l>
        <l id="s26:l7" met="3" type="-+">Voor Gods ghericht, wilt <rhyme label="c" type="f" corresp="#s26:l5">hooren</rhyme>,</l>
        <l id="s26:l8" met="3" type="-+">Ghy u bdroghen <rhyme label="d" type="m" corresp="#s26:l6">vindt</rhyme>.</l>
      </lg>
      <lg id="s27" type="stanza">
        <l id="s27:l1" met="3" type="-+">Ghy leyders blindt van <rhyme label="a" type="f">daden</rhyme></l>
        <l id="s27:l2" met="3" type="-+">Verlaet doch Cains <rhyme label="b" type="m">aert</rhyme>,</l>
        <l id="s27:l3" met="3" type="-+">Om alsoo te <rhyme label="a" type="f" corresp="#s27:l1">verraden</rhyme></l>
        <l id="s27:l4" met="3" type="-+">Die Godtlijck zijn <rhyme label="b" type="m" corresp="#s27:l2">vergaert</rhyme>,</l>
        <l id="s27:l5" met="3" type="-+">Hoe sult ghy’t naemaels <rhyme label="c" type="f">maken</rhyme></l>
        <l id="s27:l6" met="3" type="-+">Als ghy voor t’oordeel <rhyme label="d" type="m">comt</rhyme>,</l>
        <l id="s27:l7" met="3" type="-+">Dus betert uwe <rhyme label="c" type="f" corresp="#s27:l5">saken</rhyme></l>
        <l id="s27:l8" met="3" type="-+">Eer dat ghy wordt <rhyme label="d" type="m" corresp="#s27:l6">verdomt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

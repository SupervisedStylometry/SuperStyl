<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>184844</id>
    <date>
      <year-start>1791</year-start>
      <year-end>1791</year-end>
    </date>
    <tags/>
    <melody>Voor het vaderland en vrijheid</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Voor het Vaderland en <rhyme label="a" type="f">Vryheid</rhyme>:</l>
        <l id="s1:l2" met="4" type="+-">Dus was 't, dat de zang <rhyme label="b" type="m">begon</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Van een heldenschaar vol <rhyme label="a" type="f" corresp="#s1:l1">blyheid</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Die op uw gelei', <rhyme label="b" type="m" corresp="#s1:l2">Gordon</rhyme></l>
        <l id="s1:l5" met="3" type="+-">Vryheids <rhyme label="c" type="m">krygsbanier</rhyme>,</l>
        <l id="s1:l6" met="3" type="+-">Volgde grootsch en <rhyme label="c" type="m" corresp="#s1:l5">fier</rhyme></l>
        <l id="s1:l7" met="4" type="+-">In de aloude Bisschops <rhyme label="d" type="m">Stad</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Daar zy 't eerst ten zetel <rhyme label="d" type="m" corresp="#s1:l7">trad</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Dan! elk onzer draagt nu <rhyme label="a" type="f">boeijen</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Ieder onzer is thans <rhyme label="b" type="m">Slaaf</rhyme></l>
        <l id="s2:l3" met="4" type="+-">En, schoon 't Vryheidsvuur blyft <rhyme label="a" type="f" corresp="#s2:l1">gloeijen</rhyme></l>
        <l id="s2:l4" met="4" type="+-">In het hart van elk <rhyme label="b" type="m" corresp="#s2:l2">Bataaf</rhyme>,</l>
        <l id="s2:l5" met="3" type="+-">Heerschzucht zit ten <rhyme label="c" type="m">troon</rhyme>,</l>
        <l id="s2:l6" met="3" type="+-">Torscht den staf en <rhyme label="c" type="m" corresp="#s2:l5">kroon</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Handvest, Wet noch Voorrecht <rhyme label="d" type="m">geldt</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">'t Bukt nu alles voor 't <rhyme label="d" type="m" corresp="#s2:l7">Geweld</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Schoon 't Geweld U heeft <rhyme label="a" type="f">verbannen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Van dit Vaderlandsch <rhyme label="b" type="m">gewest</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Ondanks woedende <rhyme label="a" type="f" corresp="#s3:l1">aardstirannen</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Zyn uw roem en eer <rhyme label="b" type="m" corresp="#s3:l2">gevest</rhyme>,</l>
        <l id="s3:l5" met="3" type="+-">Edle <rhyme label="c" type="m">Lotgenoot</rhyme>!</l>
        <l id="s3:l6" met="3" type="+-">'k Zie uw roem <rhyme label="c" type="m" corresp="#s3:l5">vergroot</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Gloort hier weÃªr de <rhyme label="d" type="m">Vryheidszon</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Utrecht juicht, lang leev' <rhyme label="d" type="m" corresp="#s3:l7">Gordon</rhyme>!</l>
      </lg>
    </lg>
  </text>
</song>

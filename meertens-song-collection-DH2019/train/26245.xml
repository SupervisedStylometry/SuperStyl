  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Wel dien, die metter <rhyme label="a" type="m">daet</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Op den armen acht <rhyme label="a" type="m" corresp="#s1:l1">slaet</rhyme>,</l>
        <l id="s1:l3" met="3" type="+-">Godes gonste <rhyme label="b" type="m">groot</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Staet hem open <rhyme label="c" type="m">altijt</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Bevrijt is hy vant <rhyme label="a" type="m" corresp="#s1:l1">quaet</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Bewaert waer hy heen <rhyme label="a" type="m" corresp="#s1:l1">gaet</rhyme>,</l>
        <l id="s1:l7" met="3" type="+-">In Lijden en <rhyme label="b" type="m" corresp="#s1:l3">noot</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Getroost ende <rhyme label="c" type="m" corresp="#s1:l4">verblijt</rhyme>.</l>
        <l id="s1:l9" met="3" type="-+">De Heer na zijn <rhyme label="d" type="m">verbont</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">Sal hem tot geender <rhyme label="d" type="m" corresp="#s1:l9">stont</rhyme></l>
        <l id="s1:l11" met="3" type="+-">Niet laten int <rhyme label="e" type="m">ghequel</rhyme></l>
        <l id="s1:l12" met="3" type="-+">Sijnder vyanden <rhyme label="e" type="m" corresp="#s1:l11">fel</rhyme>,</l>
        <l id="s1:l13" met="3" type="-+">Sijn cranckheyt <rhyme label="d" type="m" corresp="#s1:l9">onghesont</rhyme></l>
        <l id="s1:l14" met="3" type="-+">Verandert hy seer <rhyme label="e" type="m" corresp="#s1:l11">snel</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Hierom soo doet <rhyme label="a" type="m">bystant</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Den armen hier int <rhyme label="a" type="m" corresp="#s2:l1">Landt</rhyme>,</l>
        <l id="s2:l3" met="3" type="+-">Die u hulp <rhyme label="b" type="m">behoeft</rhyme>;</l>
        <l id="s2:l4" met="3" type="-+">Toont deught, tis Godts <rhyme label="c" type="m">ghebodt</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Doet goet aen elcken <rhyme label="a" type="m" corresp="#s2:l1">cant</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Opent u milde <rhyme label="a" type="m" corresp="#s2:l1">hant</rhyme>,</l>
        <l id="s2:l7" met="3" type="+-">En niemant <rhyme label="b" type="m" corresp="#s2:l3">bedroeft</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Weest niet als Nabal <rhyme label="c" type="m" corresp="#s2:l4">sot</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Hy was boos <rhyme label="d" type="m">onbeleeft</rhyme>,</l>
        <l id="s2:l10" met="3" type="-+">Maer zijn huysvrouw die <rhyme label="d" type="m" corresp="#s2:l9">heeft</rhyme>,</l>
        <l id="s2:l11" met="3" type="+-">Met gauen goet en <rhyme label="e" type="m">milt</rhyme>,</l>
        <l id="s2:l12" met="3" type="-+">Dauids toorne <rhyme label="e" type="m" corresp="#s2:l11">ghestilt</rhyme>:</l>
        <l id="s2:l13" met="3" type="-+">Dus den armen oock <rhyme label="d" type="m" corresp="#s2:l9">geeft</rhyme>,</l>
        <l id="s2:l14" met="3" type="-+">Godts gonst ghedencken <rhyme label="e" type="m" corresp="#s2:l11">wilt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Die d'armen bystant <rhyme label="a" type="m">doet</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Vercrijght weer <rhyme label="a" type="m" corresp="#s3:l1">overvloet</rhyme>,</l>
        <l id="s3:l3" met="3" type="+-">Gods gonst hy <rhyme label="b" type="m">voorwaer</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Ghestadich open <rhyme label="c" type="m">vint</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Elias wort <rhyme label="a" type="m" corresp="#s3:l1">ghevoet</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Van een Weduwe <rhyme label="a" type="m" corresp="#s3:l1">goet</rhyme>,</l>
        <l id="s3:l7" met="3" type="+-">Wat gheschieden <rhyme label="b" type="m" corresp="#s3:l3">haer</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">O Menschen dit <rhyme label="c" type="m" corresp="#s3:l4">versint</rhyme>:</l>
        <l id="s3:l9" met="3" type="-+">Naer des Propheten <rhyme label="d" type="m">woort</rhyme>,</l>
        <l id="s3:l10" met="3" type="-+">Bracht sy het het weynich <rhyme label="d" type="m" corresp="#s3:l9">voort</rhyme>,</l>
        <l id="s3:l11" met="3" type="+-">Al was sy selfs <rhyme label="e" type="m">benout</rhyme>,</l>
        <l id="s3:l12" met="3" type="-+">Den Heer heeft sy <rhyme label="e" type="m" corresp="#s3:l11">betrout</rhyme>.</l>
        <l id="s3:l13" met="3" type="-+">Die den armen <rhyme label="d" type="m" corresp="#s3:l9">verhoort</rhyme>,</l>
        <l id="s3:l14" met="3" type="-+">Gods gonste hem <rhyme label="e" type="m" corresp="#s3:l11">aenschout</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Wat sprach Christus de <rhyme label="a" type="m">Heer</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Van d'arme Weduw' <rhyme label="a" type="m" corresp="#s4:l1">teer</rhyme>,</l>
        <l id="s4:l3" met="3" type="+-">Die twee mijten <rhyme label="b" type="m">cleyn</rhyme></l>
        <l id="s4:l4" met="3" type="-+">In Gods kist leyde <rhyme label="c" type="m">siet</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Sy had gheheven <rhyme label="a" type="m" corresp="#s4:l1">meer</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Dan die rijcken vol <rhyme label="a" type="m" corresp="#s4:l1">eer</rhyme></l>
        <l id="s4:l7" met="3" type="+-">Gaven int <rhyme label="b" type="m" corresp="#s4:l3">ghemeyn</rhyme>:</l>
        <l id="s4:l8" met="3" type="-+">Verstaet wel dit <rhyme label="c" type="m" corresp="#s4:l4">bediet</rhyme></l>
        <l id="s4:l9" met="3" type="-+">Ghy die zijt weeldich <rhyme label="d" type="m">rijck</rhyme>,</l>
        <l id="s4:l10" met="3" type="-+">Neemt van d'armen gheen <rhyme label="d" type="m" corresp="#s4:l9">wijck</rhyme>,</l>
        <l id="s4:l11" met="3" type="+-">Maer siet Lasarum <rhyme label="e" type="m">an</rhyme>,</l>
        <l id="s4:l12" met="3" type="-+">Denct op den Rijcken <rhyme label="e" type="m" corresp="#s4:l11">man</rhyme>:</l>
        <l id="s4:l13" met="3" type="-+">Spieghelt u al <rhyme label="d" type="m" corresp="#s4:l9">ghelijck</rhyme>,</l>
        <l id="s4:l14" met="3" type="-+">Seer haest moet hy daer <rhyme label="e" type="m" corresp="#s4:l11">van</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Met ghenuchten <rhyme label="a" type="m">bekent</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Dat Liefd' is <rhyme label="a" type="m" corresp="#s5:l1">t'fondament</rhyme>,</l>
        <l id="s5:l3" met="3" type="+-">Daer Godt ons na <rhyme label="b" type="m">sal</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Oordelen, cleyn en <rhyme label="c" type="m">groot</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Dus dit in t'herte <rhyme label="a" type="m" corresp="#s5:l1">prent</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">V aenschijn niet en <rhyme label="a" type="m" corresp="#s5:l1">went</rhyme></l>
        <l id="s5:l7" met="3" type="+-">Der armen <rhyme label="b" type="m" corresp="#s5:l3">ghetal</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Aensiet haer swaren <rhyme label="c" type="m" corresp="#s5:l4">noot</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">Bewijst <rhyme label="d" type="m">barmherticheyt</rhyme>,</l>
        <l id="s5:l10" met="3" type="-+">Gods gonste staet <rhyme label="d" type="m" corresp="#s5:l9">bereyt</rhyme></l>
        <l id="s5:l11" met="3" type="+-">Voor haer die Met <rhyme label="e" type="m">gheneucht</rhyme>,</l>
        <l id="s5:l12" met="3" type="-+">Den armen thoonen <rhyme label="e" type="m" corresp="#s5:l11">deucht</rhyme>,</l>
        <l id="s5:l13" met="3" type="-+">Op hoop hy dan <rhyme label="d" type="m" corresp="#s5:l9">verbeyt</rhyme></l>
        <l id="s5:l14" met="3" type="-+">Hier nae d'eeuwighe <rhyme label="e" type="m" corresp="#s5:l11">vreucht</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

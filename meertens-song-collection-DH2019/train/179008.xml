  <author>François Halma</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">MYn ziel verheft den <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Myn geest verheugt zich <rhyme label="a" type="m" corresp="#s1:l1">zeer</rhyme></l>
        <l id="s1:l3" met="3" type="-+">In Godt, myn <rhyme label="b" type="f">hartsbetrouwen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Myn Heilandt, dien zyn <rhyme label="c" type="m">Maagt</rhyme></l>
        <l id="s1:l5" met="3" type="-+">In nedrigheit <rhyme label="c" type="m" corresp="#s1:l4">behaagt</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Om haar geluk te <rhyme label="b" type="f" corresp="#s1:l3">bouwen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Want ziet, van nu <rhyme label="a" type="m">voortaan</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Zal ik voor zalig <rhyme label="a" type="m" corresp="#s2:l1">gaan</rhyme></l>
        <l id="s2:l3" met="3" type="-+">By alle de <rhyme label="b" type="f">geslachten</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Want hy, die magtig <rhyme label="c" type="m">is</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Doet my wat groots <rhyme label="c" type="m" corresp="#s2:l4">gewis</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Ver boven de <rhyme label="b" type="f" corresp="#s2:l3">gedachten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Gansch heilig is de <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Barmhartig, naar zyn <rhyme label="a" type="m" corresp="#s3:l1">leer</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Voor allen die hem <rhyme label="b" type="f">vreezen</rhyme>:</l>
        <l id="s3:l4" met="3" type="-+">Zyn liefde wordt <rhyme label="c" type="m">gedacht</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Van Israëls <rhyme label="c" type="m" corresp="#s3:l4">geslacht</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Dat hem getrou zal <rhyme label="b" type="f" corresp="#s3:l3">wezen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Hy doet een krachtig <rhyme label="a" type="m">werk</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Ver boven paal en <rhyme label="a" type="m" corresp="#s4:l1">perk</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Door 't goddlyk <rhyme label="b" type="f">alvermogen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Dat hy de trotzen <rhyme label="c" type="m">velt</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Met al hun boos <rhyme label="c" type="m" corresp="#s4:l4">gewelt</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Om kleenen te <rhyme label="b" type="f" corresp="#s4:l3">verhoogen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Hy smytze van den <rhyme label="a" type="m">troon</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Die praalen met een <rhyme label="a" type="m" corresp="#s5:l1">kroon</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Hoe magtig en <rhyme label="b" type="f">vermetel</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Opdat hy kleenen <rhyme label="c" type="m">zou</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Aan zyn verbondt <rhyme label="c" type="m" corresp="#s5:l4">getrou</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Verhoogen op den <rhyme label="b" type="f" corresp="#s5:l3">zetel</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Hun die verhongert <rhyme label="a" type="m">zyn</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Beknelt in angst en <rhyme label="a" type="m" corresp="#s6:l1">pyn</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Heeft hy veel goedt <rhyme label="b" type="f">gegeeven</rhyme>;</l>
        <l id="s6:l4" met="3" type="-+">De ryken vol van <rhyme label="c" type="m">pracht</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">En stout op hunne <rhyme label="c" type="m" corresp="#s6:l4">magt</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Gansch ledig <rhyme label="b" type="f" corresp="#s6:l3">wechgedreven</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Aan Isrel, zynen <rhyme label="a" type="m">knecht</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Heeft hy, (als 't was <rhyme label="a" type="m" corresp="#s7:l1">voorzegt</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Aan Abraham den <rhyme label="b" type="f">Vader</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">En aan zyn <rhyme label="c" type="m">nageslacht</rhyme>)</l>
        <l id="s7:l5" met="3" type="-+">Het heil te weeg <rhyme label="c" type="m" corresp="#s7:l4">gebragt</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Uit zyne <rhyme label="b" type="f" corresp="#s7:l3">zegenader</rhyme>.</l>
      </lg>
    </lg>
  </text>

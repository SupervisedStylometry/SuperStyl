  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">MEt droefheyt <rhyme label="a" type="m">groot</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Mach ick tot Godt wel <rhyme label="b" type="f">claghen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Het jammer ende swaer <rhyme label="c" type="m">verdriet</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Dat nu <rhyme label="c" type="m" corresp="#s1:l3">gheschiet</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">So dat den <rhyme label="a" type="m" corresp="#s1:l1">noot</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Der seven laetste <rhyme label="b" type="f" corresp="#s1:l2">plaghen</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Daer Apocalips af <rhyme label="c" type="m" corresp="#s1:l3">bediet</rhyme>,</l>
        <l id="s1:l8" met="2" type="-+">Commet nu <rhyme label="c" type="m" corresp="#s1:l3">siet</rhyme>,</l>
        <l id="s1:l9" met="4" type="-+">En dat de draeck, om doen zijn <rhyme label="d" type="m">saeck</rhyme>,</l>
        <l id="s1:l10" met="4" type="-+">Nu is bevonden, te sijn <rhyme label="e" type="f">ontbonden</rhyme>,</l>
        <l id="s1:l11" met="4" type="-+">En brenght tot strijdt, met haet en <rhyme label="f" type="m">nijt</rhyme>,</l>
        <l id="s1:l12" met="3" type="-+">Gog en Magog vol <rhyme label="e" type="f" corresp="#s1:l10">zonden</rhyme>,</l>
        <l id="s1:l13" met="2" type="-+">Dat druck <rhyme label="g" type="m">begint</rhyme>,</l>
        <l id="s1:l14" met="3" type="-+">al na Christus <rhyme label="e" type="f" corresp="#s1:l10">vermonden</rhyme></l>
        <l id="s1:l15" met="4" type="-+">Dat den Vygheboom knoppen <rhyme label="g" type="m" corresp="#s1:l13">ghewint</rhyme>,</l>
        <l id="s1:l16" met="2" type="-+">Dit wel <rhyme label="g" type="m" corresp="#s1:l13">versint</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Versint u <rhyme label="a" type="m">wel</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Ghy gheloovighe <rhyme label="b" type="f">gronden</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">De handen salmen aen u <rhyme label="c" type="m">slaen</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">Nemen <rhyme label="c" type="m" corresp="#s2:l3">ghevaen</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">En leyden <rhyme label="a" type="m" corresp="#s2:l1">fel</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">In den Kercker <rhyme label="b" type="f" corresp="#s2:l2">ghebonden</rhyme></l>
        <l id="s2:l7" met="4" type="-+">Ofte ghesloten seer <rhyme label="c" type="m" corresp="#s2:l3">belaen</rhyme>,</l>
        <l id="s2:l8" met="2" type="-+">Sult ghy daer <rhyme label="c" type="m" corresp="#s2:l3">staen</rhyme>,</l>
        <l id="s2:l9" met="4" type="-+">Om Christus Naem, so wert u <rhyme label="d" type="m">faem</rhyme></l>
        <l id="s2:l10" met="4" type="-+">Seere mispresen, veracht midts <rhyme label="e" type="f">desen</rhyme>,</l>
        <l id="s2:l11" met="4" type="-+">Ende ghy sult, al sonder <rhyme label="f" type="m">schult</rhyme>,</l>
        <l id="s2:l12" met="3" type="-+">Seere ghehatet <rhyme label="e" type="f" corresp="#s2:l10">wesen</rhyme>,</l>
        <l id="s2:l13" met="2" type="-+">Van Heeren <rhyme label="g" type="m">groot</rhyme></l>
        <l id="s2:l14" met="3" type="-+">Wert ghy seere <rhyme label="e" type="f" corresp="#s2:l10">begresen</rhyme>,</l>
        <l id="s2:l15" met="4" type="-+">Beveelt Godt u aenvallende <rhyme label="g" type="m" corresp="#s2:l13">noot</rhyme>,</l>
        <l id="s2:l16" met="2" type="-+">Tot in de <rhyme label="g" type="m" corresp="#s2:l13">doot</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Krijgh <rhyme label="a" type="m">doodelijck</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Is nu in dese <rhyme label="b" type="f">Landen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Dat d' een volck teghen d' ander <rhyme label="c" type="m">staet</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">Seer <rhyme label="c" type="m" corresp="#s3:l3">obstinaet</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Haer doen <rhyme label="a" type="m" corresp="#s3:l1">publijck</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Is rooven ende <rhyme label="b" type="f" corresp="#s3:l2">branden</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Verraderye nu omme <rhyme label="c" type="m" corresp="#s3:l3">gaet</rhyme>,</l>
        <l id="s3:l8" met="2" type="-+">Nydich en <rhyme label="c" type="m" corresp="#s3:l3">quaet</rhyme>,</l>
        <l id="s3:l9" met="4" type="-+">D'ongherechticheyt, so Schrift <rhyme label="d" type="m">uytleyt</rhyme>,</l>
        <l id="s3:l10" met="4" type="-+">D' overhant ervet, liefde <rhyme label="e" type="f">verstervet</rhyme>,</l>
        <l id="s3:l11" met="4" type="-+">T' bruyssen der Zee, met vrees en <rhyme label="f" type="m">wee</rhyme>,</l>
        <l id="s3:l12" met="3" type="-+">s' Menschen herte <rhyme label="e" type="f" corresp="#s3:l10">doorkervet</rhyme>,</l>
        <l id="s3:l13" met="2" type="-+">So dat <rhyme label="g" type="m">versmacht</rhyme></l>
        <l id="s3:l14" met="3" type="-+">Menich en <rhyme label="e" type="f" corresp="#s3:l10">bedervet</rhyme>,</l>
        <l id="s3:l15" met="4" type="-+">Verschrickt van dinghen <rhyme label="g" type="m" corresp="#s3:l13">onsacht</rhyme>,</l>
        <l id="s3:l16" met="2" type="-+">Die men <rhyme label="g" type="m" corresp="#s3:l13">verwacht</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Verwacht den <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Die wellust elck <rhyme label="b" type="f">versake</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Sober, rechtveerdich weest <rhyme label="c" type="m">bereyt</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">So Christus <rhyme label="c" type="m" corresp="#s4:l3">seyt</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">O Syon <rhyme label="a" type="m" corresp="#s4:l1">teer</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Staet op de eerste <rhyme label="b" type="f" corresp="#s4:l2">wake</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">En van de deure niet en <rhyme label="c" type="m" corresp="#s4:l3">scheydt</rhyme>,</l>
        <l id="s4:l8" met="2" type="-+">Also <rhyme label="c" type="m" corresp="#s4:l3">verbeydt</rhyme></l>
        <l id="s4:l9" met="4" type="-+">Den Coninck schoon, die u tot <rhyme label="d" type="m">loon</rhyme></l>
        <l id="s4:l10" met="4" type="-+">Zijn Rijck zal gheven, dat eeuwich <rhyme label="e" type="f">leven</rhyme>,</l>
        <l id="s4:l11" met="4" type="-+">Waeckt ende bidt, dat ghy <rhyme label="f" type="m">besit</rhyme>,</l>
        <l id="s4:l12" met="3" type="-+">Anders comt ghy in <rhyme label="e" type="f" corresp="#s4:l10">sneven</rhyme>,</l>
        <l id="s4:l13" met="2" type="-+">Doch versuymt <rhyme label="g" type="m">niet</rhyme></l>
        <l id="s4:l14" met="3" type="-+">Gods ghenade <rhyme label="e" type="f" corresp="#s4:l10">verheven</rhyme>,</l>
        <l id="s4:l15" met="4" type="-+">Op dat u Esaus <rhyme label="g" type="m" corresp="#s4:l13">verdriet</rhyme></l>
        <l id="s4:l16" met="2" type="-+">Niet en <rhyme label="g" type="m" corresp="#s4:l13">gheschiet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">T' gheschiet, nu <rhyme label="a" type="m">siet</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Dat men seer veel <rhyme label="b" type="f">erreuren</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Dus siet onder de Menschen <rhyme label="c" type="m">quaet</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">Ende <rhyme label="c" type="m" corresp="#s5:l3">verstaet</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">Dat zy om <rhyme label="a" type="m" corresp="#s5:l1">niet</rhyme></l>
        <l id="s5:l6" met="3" type="-+">D' onschuldighe doen <rhyme label="b" type="f" corresp="#s5:l2">treuren</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Die willen volghen Christus <rhyme label="c" type="m" corresp="#s5:l3">raet</rhyme>,</l>
        <l id="s5:l8" met="2" type="-+">Comen in <rhyme label="c" type="m" corresp="#s5:l3">smaet</rhyme>,</l>
        <l id="s5:l9" met="4" type="-+">Satan vol spijt, heeft cleynen <rhyme label="d" type="m">tijt</rhyme>,</l>
        <l id="s5:l10" met="4" type="-+">Bedrijft zijn keuren deur zijn <rhyme label="e" type="f">labeuren</rhyme>,</l>
        <l id="s5:l11" met="4" type="-+">Door leughens bloot, en valscheyt <rhyme label="f" type="m">groot</rhyme>,</l>
        <l id="s5:l12" met="3" type="-+">Brenght hy t' volck in <rhyme label="e" type="f" corresp="#s5:l10">doleuren</rhyme>,</l>
        <l id="s5:l13" met="2" type="-+">t' Lams Bruydt seer <rhyme label="g" type="m">soet</rhyme>,</l>
        <l id="s5:l14" met="3" type="-+">Die moet het oock <rhyme label="e" type="f" corresp="#s5:l10">beseuren</rhyme>,</l>
        <l id="s5:l15" met="4" type="-+">O Prince Godt, u Volck <rhyme label="g" type="m" corresp="#s5:l13">behoedt</rhyme></l>
        <l id="s5:l16" met="2" type="-+">Voor quaet <rhyme label="g" type="m" corresp="#s5:l13">ghebroet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

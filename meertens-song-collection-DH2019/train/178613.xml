  <author>François Halma</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">IK zal den Heere uit 's harten <rhyme label="a" type="m">grond</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Steeds looven, en hem met den <rhyme label="a" type="m" corresp="#s1:l1">mond</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Verheffen. 'k Zal met lust <rhyme label="b" type="f">verhaalen</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Alle uwe wondren, zonder <rhyme label="b" type="f" corresp="#s1:l3">faalen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">'k Zal in u goedheit zijn <rhyme label="a" type="m">verblijdt</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Gy zijt mijn Godt tot allen <rhyme label="a" type="m" corresp="#s2:l1">tijd</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">In u zal ik van vreugde <rhyme label="b" type="f">opspringen</rhyme>;</l>
        <l id="s2:l4" met="4" type="-+">'k Zal uwen naame psalmen <rhyme label="b" type="f" corresp="#s2:l3">zingen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Omdat mijn haters <rhyme label="a" type="m">achterwaart</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Gekeert zyn, en, met schrik <rhyme label="a" type="m" corresp="#s3:l1">vervaart</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Zyn voor uw aangezicht <rhyme label="b" type="f">gevallen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Vergaan; hoe stout zy mogten <rhyme label="b" type="f" corresp="#s3:l3">brallen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Want gy hebt mijn recht <rhyme label="a" type="m">afgedaan</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">My in mijn rechtszaak <rhyme label="a" type="m" corresp="#s4:l1">bygestaan</rhyme>.</l>
        <l id="s4:l3" met="4" type="-+">Gy hebt op uwen troon <rhyme label="b" type="f">gezeten</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">O Richter van 't harte en <rhyme label="b" type="f" corresp="#s4:l3">geweeten</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Gy hebt de Heidenen, O <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Gescholden, en met veel <rhyme label="a" type="m" corresp="#s5:l1">oneer</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Verdaan den naam der <rhyme label="b" type="f">goddeloozen</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Die eeuwig zal van schaamte <rhyme label="b" type="f" corresp="#s5:l3">bloozen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">O vyand, is in <rhyme label="a" type="m">eeuwigheit</rhyme></l>
        <l id="s6:l2" met="4" type="-+">'t Verwoesten nu volendt? en <rhyme label="a" type="m" corresp="#s6:l1">leit</rhyme></l>
        <l id="s6:l3" met="4" type="-+">De naam van onze steên <rhyme label="b" type="f">begraaven</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Daar ge uwen bloetdorst in quaamt <rhyme label="b" type="f" corresp="#s6:l3">laaven</rhyme>?</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Maar d'Opperheer zit op den <rhyme label="a" type="m">troon</rhyme></l>
        <l id="s7:l2" met="4" type="-+">In eeuwigheit; opdat hy <rhyme label="a" type="m" corresp="#s7:l1">toon'</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Zijn groote kracht en hoog <rhyme label="b" type="f">gerichte</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">En dat de wereld voor hem <rhyme label="b" type="f" corresp="#s7:l3">zwigte</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Hy zelf zal in <rhyme label="a" type="m">gerechtigheit</rhyme></l>
        <l id="s8:l2" met="4" type="-+">De wereld richten met <rhyme label="a" type="m" corresp="#s8:l1">bescheit</rhyme>;</l>
        <l id="s8:l3" met="4" type="-+">De volken zal hy hier <rhyme label="b" type="f">beneden</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Oordeelen in <rhyme label="b" type="f" corresp="#s8:l3">rechtmatigheden</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">De Heer zal wezen 't hoog <rhyme label="a" type="m">vertrek</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Des lydenden, dat hy hem <rhyme label="a" type="m" corresp="#s9:l1">dekk'</rhyme></l>
        <l id="s9:l3" met="4" type="-+">En veilige in benaude <rhyme label="b" type="f">tyden</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Opdat hy hem redde uit zyn <rhyme label="b" type="f" corresp="#s9:l3">lyden</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Die uwen naame kennen, <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Betrouwen op u meer en <rhyme label="a" type="m" corresp="#s10:l1">meer</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Omdat gy nimmer hebt <rhyme label="b" type="f">verlaaten</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Hen die u zoeken in hun <rhyme label="b" type="f" corresp="#s10:l3">staaten</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Psalmzingt den Heer die Sion <rhyme label="a" type="m">stelt</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Tot zijne woning; en <rhyme label="a" type="m" corresp="#s11:l1">vermeldt</rhyme></l>
        <l id="s11:l3" met="4" type="-+">Den volkeren zijn groote <rhyme label="b" type="f">daden</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">En 't heilverbond van zyn <rhyme label="b" type="f" corresp="#s11:l3">genaden</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Want hy zoekt streng het schuldig <rhyme label="a" type="m">bloed</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Doch, altoos <rhyme label="a" type="m" corresp="#s12:l1">goed</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Vergeet hy hen niet die hier <rhyme label="b" type="f">zugten</rhyme></l>
        <l id="s12:l4" met="4" type="-+">In hunne elende, en tot hem <rhyme label="b" type="f" corresp="#s12:l3">vluchten</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Zijt my genadig, Heer, en <rhyme label="a" type="m">help</rhyme></l>
        <l id="s13:l2" met="4" type="-+">My, dat my 't quaad niet <rhyme label="a" type="m" corresp="#s13:l1">overstelp</rhyme></l>
        <l id="s13:l3" met="4" type="-+">Van mijne haters; gy, wiens <rhyme label="b" type="f">krachten</rhyme></l>
        <l id="s13:l4" met="4" type="-+">My heilrijk uit 's doods poorten <rhyme label="b" type="f" corresp="#s13:l3">bragten</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Opdat ik uwen ganschen <rhyme label="a" type="m">lof</rhyme></l>
        <l id="s14:l2" met="4" type="-+">Vertelle in Sions poorte en <rhyme label="a" type="m" corresp="#s14:l1">hof</rhyme>;</l>
        <l id="s14:l3" met="4" type="-+">Dat ik my in uw heyl <rhyme label="b" type="f">verblyde</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">En 's vyands boosheyt niet meer <rhyme label="b" type="f" corresp="#s14:l3">lijde</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">De Heidens zijn met al hun <rhyme label="a" type="m">magt</rhyme></l>
        <l id="s15:l2" met="4" type="-+">Gezonken in hun eige <rhyme label="a" type="m" corresp="#s15:l1">gracht</rhyme>:</l>
        <l id="s15:l3" met="4" type="-+">Hun voeten zijn in 't net <rhyme label="b" type="f">gevangen</rhyme></l>
        <l id="s15:l4" met="4" type="-+">Dat heimlijk was voor my <rhyme label="b" type="f" corresp="#s15:l3">gehangen</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">De Heer is overal <rhyme label="a" type="m">bekent</rhyme></l>
        <l id="s16:l2" met="4" type="-+">Geworden; 't recht heeft hy <rhyme label="a" type="m" corresp="#s16:l1">volendt</rhyme>:</l>
        <l id="s16:l3" met="4" type="-+">De godtloose is verstrikt, met <rhyme label="b" type="f">schanden</rhyme></l>
        <l id="s16:l4" met="4" type="-+">En schaamte, in 't werk van zijne <rhyme label="b" type="f" corresp="#s16:l3">handen</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">De goddeloozen keeren <rhyme label="a" type="m">naar</rhyme></l>
        <l id="s17:l2" met="4" type="-+">De helle toe te rugge; <rhyme label="a" type="m" corresp="#s17:l1">daar</rhyme></l>
        <l id="s17:l3" met="4" type="-+">De heidens zyn die Godt <rhyme label="b" type="f">vergeeten</rhyme>,</l>
        <l id="s17:l4" met="4" type="-+">En van zijn wil noch wetten <rhyme label="b" type="f" corresp="#s17:l3">weeten</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Want de nootdruftige zal <rhyme label="a" type="m">niet</rhyme></l>
        <l id="s18:l2" met="4" type="-+">Voor altoos blijven in 't <rhyme label="a" type="m" corresp="#s18:l1">verdriet</rhyme>;</l>
        <l id="s18:l3" met="4" type="-+">De hoop van die elendig <rhyme label="b" type="f">leeven</rhyme></l>
        <l id="s18:l4" met="4" type="-+">Zal hun niet eeuwiglyk <rhyme label="b" type="f" corresp="#s18:l3">begeeven</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">Sta op, Heer, laat de booze <rhyme label="a" type="m">mensch</rhyme></l>
        <l id="s19:l2" met="4" type="-+">Zich niet versterken, naar zyn' <rhyme label="a" type="m" corresp="#s19:l1">wensch</rhyme>;</l>
        <l id="s19:l3" met="4" type="-+">Laat alle Heidnen in 't <rhyme label="b" type="f">gerichte</rhyme></l>
        <l id="s19:l4" met="4" type="-+">Verschynen voor uw <rhyme label="b" type="f" corresp="#s19:l3">aangezichte</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">Heer, jaag hen vreeze en bevinge <rhyme label="a" type="m">aan</rhyme>,</l>
        <l id="s20:l2" met="4" type="-+">Dat zy met hunnen trots <rhyme label="a" type="m" corresp="#s20:l1">vergaan</rhyme>:</l>
        <l id="s20:l3" met="4" type="-+">Laat alle Heidenen toch <rhyme label="b" type="f">weeten</rhyme></l>
        <l id="s20:l4" met="4" type="-+">Dat zy zijn menschen, laag <rhyme label="b" type="f" corresp="#s20:l3">gezeten</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

<song>
  <meta>
    <id>32861</id>
    <date>
      <year-start>1614</year-start>
      <year-end>1614</year-end>
    </date>
    <tags>
      <tag standard-name="loflied" translation="praise song">loflied</tag>
      <tag standard-name="pinksterlied" translation="Pentecostal song">pinksterlied</tag>
      <tag standard-name="gebedslied" translation="prayer">gebedslied</tag>
    </tags>
    <melody>Es ist das Heil uns kommen her</melody>
    <categories>
      <category translation="seasons and annual events">jaarkring</category>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Rumoldus Batavus</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Wy willen ons verblijden <rhyme label="a" type="m">nu</rhyme></l>
        <l id="s1:l2" met="3" type="-+">En die goetheyt moeten wy <rhyme label="b" type="f">louen</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Die daer is ghecomen van <rhyme label="a" type="m" corresp="#s1:l1">v</rhyme></l>
        <l id="s1:l4" met="3" type="-+">O Heere Godt van <rhyme label="b" type="f" corresp="#s1:l2">bouen</rhyme></l>
        <l id="s1:l5" met="4" type="-+">V Gheest die daer die aerde <rhyme label="c" type="m">vervult</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Die ghy altijt wtstorten <rhyme label="c" type="m" corresp="#s1:l5">sult</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Op al die in v <rhyme label="b" type="f" corresp="#s1:l2">ghelouen</rhyme>,</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Desen gheest zeer <rhyme label="a" type="m">excelent</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Hebt ghy heden <rhyme label="b" type="f">ghesonden</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Op hondert, twintich, of daer <rhyme label="a" type="m" corresp="#s2:l1">ontrent</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Die in een huys sijn <rhyme label="b" type="f" corresp="#s2:l2">geuonden</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Die wt liefden daer waeren <rhyme label="c" type="m">vergaert</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Als tonghen heeft hy hen <rhyme label="c" type="m" corresp="#s2:l5">veropenbaert</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Als vier men mercken <rhyme label="b" type="f" corresp="#s2:l2">konden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Nu is, O Heer, volbracht <rhyme label="a" type="m">gheweest</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Dat ghy v Apostelen <rhyme label="b" type="f">seyden</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Dat ghy sout seynden uwen <rhyme label="a" type="m" corresp="#s3:l1">gheest</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Daer sy nae souden <rhyme label="b" type="f" corresp="#s3:l2">beyden</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Dus wort vervult al die <rhyme label="c" type="m">schriftuier</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Ghy soutse doopen met een <rhyme label="c" type="m" corresp="#s3:l5">vuier</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Hier toe souden sy haer <rhyme label="b" type="f" corresp="#s3:l2">bereyden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Desen gheest die daer voorts <rhyme label="a" type="m">comt</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Vanden Vader, ende vanden <rhyme label="b" type="f">Soone</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Die daer den trooster wort <rhyme label="a" type="m" corresp="#s4:l1">genoemt</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Dese is die derde <rhyme label="b" type="f" corresp="#s4:l2">persoone</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Die daer oock is, ende wort <rhyme label="c" type="m">gheseyt</rhyme></l>
        <l id="s4:l6" met="4" type="-+">God die daer is van <rhyme label="c" type="m" corresp="#s4:l5">eeuwicheyt</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Eenich metten Vader, ende den zoon zeer <rhyme label="b" type="f" corresp="#s4:l2">schoone</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Dit is gheweest dat water <rhyme label="a" type="m">zoet</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Dat wt buyck soude <rhyme label="b" type="f">vloyen</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">D’welck ghy heden wt gieten <rhyme label="a" type="m" corresp="#s5:l1">doet</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Op dat die aerde soude <rhyme label="b" type="f" corresp="#s5:l2">groyen</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Die soo zeer was gheweest <rhyme label="c" type="m">verdort</rhyme></l>
        <l id="s5:l6" met="4" type="-+">Daer ghy dit leuende water op <rhyme label="c" type="m" corresp="#s5:l5">stort</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Op dat haer vruchten zouden <rhyme label="b" type="f" corresp="#s5:l2">groyen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Dit is gheweest v wonder <rhyme label="a" type="m">werck</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Door u wijsheyt O Heer der <rhyme label="b" type="f">Heeren</rhyme></l>
        <l id="s6:l3" met="4" type="+-">V dienaers eerst te maeken <rhyme label="a" type="m" corresp="#s6:l1">sterck</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Om den crancken voorts te <rhyme label="b" type="f" corresp="#s6:l2">leeren</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Dus wapent ghy de arbeyders van uwen <rhyme label="c" type="m">dou</rhyme></l>
        <l id="s6:l6" met="4" type="-+">De welcke ghy nu senden <rhyme label="c" type="m" corresp="#s6:l5">zou</rhyme>’</l>
        <l id="s6:l7" met="3" type="-+">Om al die aerde te <rhyme label="b" type="f" corresp="#s6:l2">bekeeren</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Dit water heeft alzoo veel <rhyme label="a" type="m">gedaen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Alle vrese ginck haer quijt <rhyme label="b" type="f">maecken</rhyme></l>
        <l id="s7:l3" met="4" type="+-">Als zy voor des werelts hoocheyt quamen <rhyme label="a" type="m" corresp="#s7:l1">staen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Siet hoe vromelijck dat sy <rhyme label="b" type="f" corresp="#s7:l2">spraecken</rhyme></l>
        <l id="s7:l5" met="4" type="-+">Sy waren te voren seer <rhyme label="c" type="m">beureest</rhyme></l>
        <l id="s7:l6" met="4" type="-+">Maer dit is nu al wech <rhyme label="c" type="m" corresp="#s7:l5">gheweest</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Nae dat dit water haer quam <rhyme label="b" type="f" corresp="#s7:l2">raecken</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Ghy sout uwen Geest in ghedaente van <rhyme label="a" type="m">vuier</rhyme></l>
        <l id="s8:l2" met="3" type="-+">En in ghedeelde <rhyme label="b" type="f">tonghen</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Dit leert ons die heylighe <rhyme label="a" type="m" corresp="#s8:l1">schriftuier</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Dat ouden ende <rhyme label="b" type="f" corresp="#s8:l2">ionghen</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Propheteeren, ende visionen <rhyme label="c" type="m">sien</rhyme></l>
        <l id="s8:l6" met="4" type="-+">Eer dat den dach des heeren sal <rhyme label="c" type="m" corresp="#s8:l5">schien</rhyme></l>
        <l id="s8:l7" met="3" type="-+">Laet ons tot berouwe worden <rhyme label="b" type="f" corresp="#s8:l2">gedronghen</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Coemt o schepper heylighen <rhyme label="a" type="m">Gheest</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Wilt v woonstadt oock in ons <rhyme label="b" type="f">maecken</rhyme></l>
        <l id="s9:l3" met="4" type="+-">Die Apostelen zijn vol van v <rhyme label="a" type="m" corresp="#s9:l1">geweest</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Met veel taelen sy door v <rhyme label="b" type="f" corresp="#s9:l2">spraecken</rhyme></l>
        <l id="s9:l5" met="4" type="-+">Al is ons dat van gheenen <rhyme label="c" type="m">noodt</rhyme></l>
        <l id="s9:l6" met="4" type="-+">Geeft ons nochtans door u liefde <rhyme label="c" type="m" corresp="#s9:l5">groot</rhyme></l>
        <l id="s9:l7" met="3" type="-+">Dat wy v gheests soeticheyt <rhyme label="b" type="f" corresp="#s9:l2">smaecken</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Hy sal ons wesen bouen huenich <rhyme label="a" type="m">soet</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Soo wy heer v <rhyme label="b" type="f">beminnen</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Daerom bidden wy v met <rhyme label="a" type="m" corresp="#s10:l1">ootmoet</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Laet hem tot ons comen <rhyme label="b" type="f" corresp="#s10:l2">binnen</rhyme></l>
        <l id="s10:l5" met="4" type="-+">Op dat wy door zijnen <rhyme label="c" type="m">cracht</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Door alle vianden worden <rhyme label="c" type="m" corresp="#s10:l5">ghebracht</rhyme></l>
        <l id="s10:l7" met="3" type="-+">En die croone des leuens <rhyme label="b" type="f" corresp="#s10:l2">winnen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

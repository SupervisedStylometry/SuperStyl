    <melody>Nun freut euch liebe Christen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HEER hartlijck wil ick dancken <rhyme label="a" type="m">dy</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Hier in der Vroomen <rhyme label="b" type="f">Raede</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">End Loven in die G'meynte <rhyme label="a" type="m" corresp="#s1:l1">bly</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Groot syn des HEEren <rhyme label="b" type="f" corresp="#s1:l2">Daede</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Wies' Acht, heeft Enckel Lust daer <rhyme label="c" type="m">aen</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Tis Heerlijck (wat hy maeckt) <rhyme label="c" type="m" corresp="#s1:l5">ghedaen</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Syn G'rechticheyt blijft <rhyme label="d" type="f">Eewich</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Hy heeft een Heuch'nis op <rhyme label="a" type="m">ghericht</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Die HEER Barmhertich <rhyme label="b" type="f">preesen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Syn Wond'ren te vergeten <rhyme label="a" type="m" corresp="#s2:l1">nicht</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Hy Spijset die hem <rhyme label="b" type="f" corresp="#s2:l2">Vreesen</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Ghedenckend' Eewich aen syn <rhyme label="c" type="m">Bondt</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Hy laet syn Volcke maecken <rhyme label="c" type="m" corresp="#s2:l5">Condt</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Syn Macht en syn <rhyme label="d" type="f">Weldaden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Godt sal door syn <rhyme label="a" type="m">Rechtveerdicheet</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Der Heyden Erffgoet <rhyme label="b" type="f">gheven</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Syn Wercken syn tot ons <rhyme label="a" type="m" corresp="#s3:l1">gheneet</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Waerheyt en Recht daer <rhyme label="b" type="f" corresp="#s3:l2">neven</rhyme>.</l>
        <l id="s3:l5" met="4" type="-+">Al syn Gheboden heerlijck <rhyme label="c" type="m">syn</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Bestaen altoos end eeuwich <rhyme label="c" type="m" corresp="#s3:l5">fijn</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Ghemaeckt trou en <rhyme label="d" type="f">waerachtich</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Syn Volck hy een Verlossing' <rhyme label="a" type="m">sendt</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Houdt syn Verbont oock <rhyme label="b" type="f">Eerlijck</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Op dat syn Naem sy wel <rhyme label="a" type="m" corresp="#s4:l1">bekendt</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Die Heylich is en <rhyme label="b" type="f" corresp="#s4:l2">Heerlijck</rhyme>.</l>
        <l id="s4:l5" met="4" type="-+">De Vrees des HEEren is <rhyme label="c" type="m">voorwaer</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Der Wijsheyt Aenvang gants en <rhyme label="c" type="m" corresp="#s4:l5">gaer</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Behoedt in allen <rhyme label="d" type="f">Nooden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Het is een schoone <rhyme label="a" type="m">Cloeckicheyt</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Die haer daer nae gaen <rhyme label="b" type="f">stueren</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">En die GOdt Prijsen al <rhyme label="a" type="m" corresp="#s5:l1">bereyt</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Syn Loff sal Eewich <rhyme label="b" type="f" corresp="#s5:l2">dueren</rhyme>.</l>
        <l id="s5:l5" met="4" type="-+">Nu ghy syn Volck voecht u te <rhyme label="c" type="m">saem</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Loff singht van Herten s'Heeren <rhyme label="c" type="m" corresp="#s5:l5">Naem</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">En spreeckt all' vrolijck <rhyme label="d" type="f">Amen</rhyme>.</l>
      </lg>
    </lg>
  </text>

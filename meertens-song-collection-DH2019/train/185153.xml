  <author>Gerrit Manheer</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">o Aangename <rhyme label="a" type="f">dagen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Die men in Liefde <rhyme label="b" type="m">slijt</rhyme>!</l>
        <l id="s1:l3" met="3" type="-+">Gij kunt een ieder <rhyme label="a" type="f" corresp="#s1:l1">behagen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Schoon dat gij word <rhyme label="b" type="m" corresp="#s1:l2">benijd</rhyme>:</l>
        <l id="s1:l5" met="3" type="-+">Daar ieder bij zijn <rhyme label="c" type="f">Liefje</rhyme></l>
        <l id="s1:l6" met="3" type="-+">In volle vrijheid <rhyme label="d" type="m">leefd</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">En daar de Min dat <rhyme label="c" type="f" corresp="#s1:l5">diefje</rhyme>!</l>
        <l id="s1:l8" met="3" type="-+">Het meest te zeggen <rhyme label="d" type="m" corresp="#s1:l6">heeft</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Wat lieffelijke <rhyme label="a" type="f">stonden</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Verslijt men met <rhyme label="b" type="m">Elkaar</rhyme>!</l>
        <l id="s2:l3" met="3" type="-+">Door ware min <rhyme label="a" type="f" corresp="#s2:l1">gebonden</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Schroomt men voor geen <rhyme label="b" type="m" corresp="#s2:l2">gevaar</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Daar ieder bij zijn <rhyme label="c" type="f">Liefje</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">In volle vrijheid <rhyme label="d" type="m">leefd</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">En daar de Min, dat <rhyme label="c" type="f" corresp="#s2:l5">diefje</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Het meest te zeggen <rhyme label="d" type="m" corresp="#s2:l6">heeft</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ach! welk gelukkige <rhyme label="a" type="f">uurtjes</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Verslijt men in dat <rhyme label="b" type="m">zoet</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Als Venus vonkend <rhyme label="a" type="f" corresp="#s3:l1">vuurtjes</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Ons jong hart blaken <rhyme label="b" type="m" corresp="#s3:l2">doet</rhyme>;</l>
        <l id="s3:l5" met="3" type="-+">Daar ieder met zijn <rhyme label="c" type="f">Liefje</rhyme></l>
        <l id="s3:l6" met="3" type="-+">In volle vrijheid <rhyme label="d" type="m">leefd</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">En daar de min dat <rhyme label="c" type="f" corresp="#s3:l5">diefje</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Het meest te zeggen <rhyme label="d" type="m" corresp="#s3:l6">heeft</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Hoe schijnvroom ook mag <rhyme label="a" type="f">razen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Op 't geen de waereld <rhyme label="b" type="m">doet</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Hij laat zig ras <rhyme label="a" type="f" corresp="#s4:l1">verbazen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Als hij gevoeld dien <rhyme label="b" type="m" corresp="#s4:l2">gloed</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Als hij eens met zijn <rhyme label="c" type="f">Liefje</rhyme></l>
        <l id="s4:l6" met="3" type="-+">In volle vrijheid <rhyme label="d" type="m">leefd</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">En daar de Min dat <rhyme label="c" type="f" corresp="#s4:l5">diefje</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Het meest te zeggen <rhyme label="d" type="m" corresp="#s4:l6">heeft</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">De Philosooph hoe <rhyme label="a" type="f">statig</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Hoe zedig en <rhyme label="b" type="m">geleert</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Word door de Liefde <rhyme label="a" type="f" corresp="#s5:l1">matig</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Als Venus hem <rhyme label="b" type="m" corresp="#s5:l2">regeert</rhyme>;</l>
        <l id="s5:l5" met="3" type="-+">Wanneer hij met zijn <rhyme label="c" type="f">Liefje</rhyme></l>
        <l id="s5:l6" met="3" type="-+">In volle vrijheid <rhyme label="d" type="m">leefd</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">En daar de Min dat <rhyme label="c" type="f" corresp="#s5:l5">diefje</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Het meest te zeggen <rhyme label="d" type="m" corresp="#s5:l6">heeft</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

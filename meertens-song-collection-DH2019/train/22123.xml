  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Ick verbeyde den Heere, want <rhyme label="a" type="m">hy</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Neycht hem, om my te <rhyme label="b" type="f">verhooren</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Hy trock my wt den grachte <rhyme label="a" type="m" corresp="#s1:l1">vrij</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Daer in ick lach tot den <rhyme label="b" type="f" corresp="#s1:l2">ooren</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">Hy halp my wt den modder, en <rhyme label="c" type="m">tslijck</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">En stelde mijne voeten <rhyme label="c" type="m" corresp="#s1:l5">ghelijck</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Op een Steenrotz hooch <rhyme label="d" type="f">bouen</rhyme>:</l>
        <l id="s1:l8" met="4" type="-+">Hy heeft bereyt oock mijnen <rhyme label="e" type="m">ghanck</rhyme>,</l>
        <l id="s1:l9" met="4" type="-+">In mijn mondt ghegheuen een nieu <rhyme label="e" type="m" corresp="#s1:l8">gsanck</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">Om hem daer mede te <rhyme label="d" type="f" corresp="#s1:l7">louen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Dit sullender veel sien: en <rhyme label="a" type="m">vreesen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En Godt den Heere <rhyme label="b" type="f">betrouwen</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Salich is hy en <rhyme label="a" type="m" corresp="#s2:l1">ghepresen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Die op Godt hoep sonder <rhyme label="b" type="f" corresp="#s2:l2">verflouwen</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">En die by den hoouaerdgen niet <rhyme label="c" type="m">gaet</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Noch wandelt met den loegnaers <rhyme label="c" type="m" corresp="#s2:l5">quaet</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Heer Godt veel wonders <rhyme label="d" type="f">ghepresen</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">Hebt ghy ghedaen: wie is u <rhyme label="e" type="m">ghelijck</rhyme>?</l>
        <l id="s2:l9" met="4" type="-+">U ghepeysen zijn seer <rhyme label="e" type="m" corresp="#s2:l8">wonderlijck</rhyme>,</l>
        <l id="s2:l10" met="3" type="-+">Die ghy aen ons hebt <rhyme label="d" type="f" corresp="#s2:l7">bewesen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Die wil ick nu gaen <rhyme label="a" type="m">vertellen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">En een yeglijcken <rhyme label="b" type="f">openbaren</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Datz te veel zijn om die te <rhyme label="a" type="m" corresp="#s3:l1">tellen</rhyme>:</l>
        <l id="s3:l4" met="3" type="-+">U behaghen oock niet <rhyme label="b" type="f" corresp="#s3:l2">voorware</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Sacrifici, noch <rhyme label="c" type="m">Spijsoffrandt</rhyme>:</l>
        <l id="s3:l6" met="4" type="-+">Maer ghy hebt mijn ooren <rhyme label="c" type="m" corresp="#s3:l5">playsandt</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Opghedaen: dies ick hoorden <rhyme label="d" type="f">gherne</rhyme>:</l>
        <l id="s3:l8" met="4" type="-+">Dat ghy noch Brandoffranden <rhyme label="e" type="m">goet</rhyme>,</l>
        <l id="s3:l9" met="4" type="-+">Noch Sundoffranden, met <rhyme label="e" type="m" corresp="#s3:l8">Bocxbloet</rhyme>,</l>
        <l id="s3:l10" met="3" type="-+">Van niemanden niet en <rhyme label="d" type="f" corresp="#s3:l7">begheerden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Doen seyde ick: siet hier com <rhyme label="a" type="m">ick</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Int boeck staet van my <rhyme label="b" type="f">gheschreuen</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Om te doen uwen wil <rhyme label="a" type="m" corresp="#s4:l1">ghewillick</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Daer toe word ick <rhyme label="b" type="f" corresp="#s4:l2">ghedreuen</rhyme>:</l>
        <l id="s4:l5" met="4" type="-+">Uwen wet die is in my <rhyme label="c" type="m">bereyt</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Om te preeken van u <rhyme label="c" type="m" corresp="#s4:l5">rechtuaerdicheyt</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Inde groote <rhyme label="d" type="f">Ghemeynte</rhyme>:</l>
        <l id="s4:l8" met="4" type="-+">Siet: ick en sal tot gheender <rhyme label="e" type="m">stondt</rhyme>,</l>
        <l id="s4:l9" met="4" type="-+">Gheensins toehouden mynen <rhyme label="e" type="m" corresp="#s4:l8">mondt</rhyme>,</l>
        <l id="s4:l10" met="3" type="-+">Dat weet ghy Heer <rhyme label="d" type="f" corresp="#s4:l7">alleyne</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ick en heb uwe <rhyme label="a" type="m">rechtuaerdicheyt</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">In mijn herte niet <rhyme label="b" type="f">verborghen</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Van u waerheyt, ende <rhyme label="a" type="m" corresp="#s5:l1">salicheyt</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Spreeck ick tsauens, en <rhyme label="b" type="f" corresp="#s5:l2">smorghens</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Ick en verswijg u ghenade: <rhyme label="c" type="m">siet</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Inde groote Ghemeynte <rhyme label="c" type="m" corresp="#s5:l5">niet</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Daerom en laet niet <rhyme label="d" type="f">varen</rhyme>,</l>
        <l id="s5:l8" met="4" type="-+">Van my Heer u <rhyme label="e" type="m">barmherticheyt</rhyme>:</l>
        <l id="s5:l9" met="4" type="-+">Maer u goetheyt, ende <rhyme label="e" type="m" corresp="#s5:l8">waerheyt</rhyme>,</l>
        <l id="s5:l10" met="3" type="-+">Die moeten my altijts <rhyme label="d" type="f" corresp="#s5:l7">bewaren</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Soo veel onglucx my omringt <rhyme label="a" type="m">heeft</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Dat icks niet ghesegghen en <rhyme label="b" type="f">can</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">Mijn misdaet my soo aenghegrepen <rhyme label="a" type="m" corresp="#s6:l1">heeft</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Dat icker gheensins af ghesien en <rhyme label="b" type="f" corresp="#s6:l2">can</rhyme>:</l>
        <l id="s6:l5" met="4" type="-+">En sy zijn meer dan alle mijn <rhyme label="c" type="m">haer</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Soo ick op mijn hooft heb <rhyme label="c" type="m" corresp="#s6:l5">voorwaer</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Ja mijn hert heeft my <rhyme label="d" type="f">verlaten</rhyme>,</l>
        <l id="s6:l8" met="4" type="-+">Laet u behaghen dat ghy <rhyme label="e" type="m">my</rhyme>,</l>
        <l id="s6:l9" met="4" type="-+">Verlost Heer: daerom haest doch <rhyme label="e" type="m" corresp="#s6:l8">ghy</rhyme>/</l>
        <l id="s6:l10" met="3" type="-+">Om my thelpen bouen <rhyme label="d" type="f" corresp="#s6:l7">maten</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Laetse doch al ter schanden <rhyme label="a" type="m">gaen</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">En oock seer beschaemt <rhyme label="b" type="f">worden</rhyme>:</l>
        <l id="s7:l3" met="4" type="-+">Die mijn Siele soo seer nae <rhyme label="a" type="m" corresp="#s7:l1">gaen</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Om die snel te <rhyme label="b" type="f" corresp="#s7:l2">vermoorden</rhyme>:</l>
        <l id="s7:l5" met="4" type="-+">Laetse oock ouer rug vallen <rhyme label="c" type="m">al</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">En ghescheynt worden ouer <rhyme label="c" type="m" corresp="#s7:l5">al</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Die my quaets gunnen, en <rhyme label="d" type="f">quellen</rhyme>:</l>
        <l id="s7:l8" met="4" type="-+">Oock moeten sy ghescheynt worden <rhyme label="e" type="m">me</rhyme>,</l>
        <l id="s7:l9" met="4" type="-+">Die daer van my segghen he, <rhyme label="e" type="m" corresp="#s7:l8">he</rhyme>,</l>
        <l id="s7:l10" met="3" type="-+">Godt salz oock ter aerden <rhyme label="d" type="f" corresp="#s7:l7">vellen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Laetse blijde en vrolijck <rhyme label="a" type="m">zijn</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Alle die u Heer <rhyme label="b" type="f">soecken</rhyme>:</l>
        <l id="s8:l3" met="4" type="-+">En die u salicheyt beminnen <rhyme label="a" type="m" corresp="#s8:l1">fijn</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Sullen segghen in alle <rhyme label="b" type="f" corresp="#s8:l2">hoecken</rhyme>:</l>
        <l id="s8:l5" met="4" type="-+">Gheloeft sy de Heer, met luyder <rhyme label="c" type="m">stem</rhyme>:</l>
        <l id="s8:l6" met="4" type="-+">(Want ick Allendich, en Arm <rhyme label="c" type="m" corresp="#s8:l5">ben</rhyme>)</l>
        <l id="s8:l7" met="3" type="-+">En dat om zijnen <rhyme label="d" type="f">name</rhyme>:</l>
        <l id="s8:l8" met="4" type="-+">De Heer voor my sorchuuldich <rhyme label="e" type="m">is</rhyme>,</l>
        <l id="s8:l9" met="4" type="-+">Myn verlosser en helper is hy <rhyme label="e" type="m" corresp="#s8:l8">ghewis</rhyme>,</l>
        <l id="s8:l10" met="3" type="-+">En beydt niet lang O Heer, <rhyme label="d" type="f" corresp="#s8:l7">Amen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

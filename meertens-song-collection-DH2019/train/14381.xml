    <melody>Waar is de dochter van Sion</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Aegidius Haeffacker</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Waer is de dochter van <rhyme label="a" type="m">Syon</rhyme>?</l>
        <l id="s1:l2" met="3" type="-+">Ick soud' haer blijde <rhyme label="b" type="f">maken</rhyme>.</l>
        <l id="s1:l3" met="4" type="-+">Ick soude haer een' boodtschap <rhyme label="a" type="m" corresp="#s1:l1">doen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Van alsoo groote <rhyme label="b" type="f" corresp="#s1:l2">saken</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">WAer is de Dochter van <rhyme label="a" type="m">Syon</rhyme>?</l>
        <l id="s2:l2" met="3" type="-+">Ick soud' haer blijde <rhyme label="b" type="f">maken</rhyme>.</l>
        <l id="s2:l3" met="4" type="-+">Ick soude haer een' boodtschap <rhyme label="a" type="m" corresp="#s2:l1">doen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Van alsoo groote <rhyme label="b" type="f" corresp="#s2:l2">saken</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Als men de wereldt heel <rhyme label="a" type="m">beschreef</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Soo wierdt de Maghet <rhyme label="b" type="f">Moeder</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Te Bethlehem, daer sy doe <rhyme label="a" type="m" corresp="#s3:l1">bleef</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Van 't kindt, onsen <rhyme label="b" type="f" corresp="#s3:l2">Behoeder</rhyme>,</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Een glas al is 't dat 't schijnt daer <rhyme label="a" type="m">door</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">'t En breeckt niet van der <rhyme label="b" type="f">Sonnen</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Soo heeft sy Maghet naer en <rhyme label="a" type="m" corresp="#s4:l1">voor</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Dat saligh kindt <rhyme label="b" type="f" corresp="#s4:l2">ghewonnen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Een duysternis is ons <rhyme label="a" type="m">verklaerdt</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Een licht is <rhyme label="b" type="f">op-gheresen</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Een Maget heeft een kindt <rhyme label="a" type="m" corresp="#s5:l1">gebaerdt</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Een kindt schoon <rhyme label="b" type="f" corresp="#s5:l2">uytghelesen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">O wonder Moeder, wonder <rhyme label="a" type="m">Kindt</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Moeder en Maeght <rhyme label="b" type="f">ghepresen</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">Maer 't Kindt dat sy in doeckskens <rhyme label="a" type="m" corresp="#s6:l1">windt</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Komt ons sonden <rhyme label="b" type="f" corresp="#s6:l2">ghenesen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Maria nam hem op den <rhyme label="a" type="m">schoot</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Sy kust' hem aen sijn <rhyme label="b" type="f">monde</rhyme>:</l>
        <l id="s7:l3" met="4" type="-+">Die liefde hadde sy seer <rhyme label="a" type="m" corresp="#s7:l1">groot</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Tot hem in allen <rhyme label="b" type="f" corresp="#s7:l2">stonde</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Lof Heere moet u altoos <rhyme label="a" type="m">zijn</rhyme>:</l>
        <l id="s8:l2" met="3" type="-+">Wilt ons (o Heer) <rhyme label="b" type="f">gheleyden</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Met Maria de Moeder <rhyme label="a" type="m" corresp="#s8:l1">dijn</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Als wy eens van hier <rhyme label="b" type="f" corresp="#s8:l2">scheyden</rhyme>.</l>
      </lg>
    </lg>
  </text>

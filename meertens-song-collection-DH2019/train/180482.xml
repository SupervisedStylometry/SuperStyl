    <melody>Gelukkig is de mens</melody>
  <author>Gaudentius van Loemel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Barbara reyne <rhyme label="a" type="m">Maeght</rhyme>!</l>
        <l id="s1:l2" met="3" type="-+">In Godts liefde <rhyme label="b" type="f">ontsteken</rhyme>:</l>
        <l id="s1:l3" met="3" type="-+">Want dees u heeft <rhyme label="a" type="m" corresp="#s1:l1">behaeght</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Waer om ghy zijdt <rhyme label="b" type="f" corresp="#s1:l2">geweken</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Van de <rhyme label="c" type="m">Affgodery</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Des duyvels <rhyme label="c" type="m" corresp="#s1:l5">slaverny</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Om soo te wesen <rhyme label="c" type="m" corresp="#s1:l5">vry</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">V Vader seer <rhyme label="a" type="m">verblindt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Doet eenen Toren <rhyme label="b" type="f">maecken</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Waer in sijn eenich <rhyme label="a" type="m" corresp="#s2:l1">kindt</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Bedenckt Godts wonder <rhyme label="b" type="f" corresp="#s2:l2">saecken</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Den rijckdom ghy <rhyme label="c" type="m">verfoyt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">En seer in deughden <rhyme label="c" type="m" corresp="#s2:l5">bloydt</rhyme></l>
        <l id="s2:l7" met="3" type="-+">V tot den Heer soo <rhyme label="c" type="m" corresp="#s2:l5">spoyt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Wie dat u hebben <rhyme label="a" type="m">wouw</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Kost by u niet <rhyme label="b" type="f">verwerven</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Ghy gaeft aen Godt u <rhyme label="a" type="m" corresp="#s3:l1">trouw</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Waerom ontsiet geen <rhyme label="b" type="f" corresp="#s3:l2">sterven</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">V Vader machtigh <rhyme label="c" type="m">ryck</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En kost door geen <rhyme label="c" type="m" corresp="#s3:l5">practyck</rhyme></l>
        <l id="s3:l7" met="3" type="-+">V trecken tot het <rhyme label="c" type="m" corresp="#s3:l5">slyck</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Het jock des Heeren <rhyme label="a" type="m">soet</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Was alleen u <rhyme label="b" type="f">behaghen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Syn Cruysch in u <rhyme label="a" type="m" corresp="#s4:l1">gemoet</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Ghy onvermoydt woudt <rhyme label="b" type="f" corresp="#s4:l2">draghen</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">Want door het Hemelsch <rhyme label="c" type="m">licht</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">En suyver minne <rhyme label="c" type="m" corresp="#s4:l5">plicht</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Was u dit geen <rhyme label="c" type="m" corresp="#s4:l5">gewight</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Godt Vader, Soon, en <rhyme label="a" type="m">Geest</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Waeren in u <rhyme label="b" type="f">gedachten</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Dit was al uwe <rhyme label="a" type="m" corresp="#s5:l1">feest</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Waer naer alleen ghy <rhyme label="b" type="f" corresp="#s5:l2">trachten</rhyme>:</l>
        <l id="s5:l5" met="3" type="-+">Want door dry vensters <rhyme label="c" type="m">Bruydt</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">O schoone teere <rhyme label="c" type="m" corresp="#s5:l5">spruyt</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Hebt ghy ons dat <rhyme label="c" type="m" corresp="#s5:l5">beduydt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">V Vader boosch en <rhyme label="a" type="m">fel</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Met gansch vergramden <rhyme label="b" type="f">moede</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Aen uwe liefd’ <rhyme label="a" type="m" corresp="#s6:l1">rebel</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Sijn kindt doet slaen met <rhyme label="b" type="f" corresp="#s6:l2">roeden</rhyme>;</l>
        <l id="s6:l5" met="3" type="-+">Maer dit u lichaem <rhyme label="c" type="m">teer</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">O Bruydt van Godt den <rhyme label="c" type="m" corresp="#s6:l5">Heer</rhyme></l>
        <l id="s6:l7" met="3" type="-+">In ‘t minsten doet geen <rhyme label="c" type="m" corresp="#s6:l5">seer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Dioscorus <rhyme label="a" type="m">gestoort</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Vergeet sijn Vaders <rhyme label="b" type="f">minne</rhyme>;</l>
        <l id="s7:l3" met="3" type="-+">Want tot sijn dochters <rhyme label="a" type="m" corresp="#s7:l1">moordt</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Hy gansch berooft van <rhyme label="b" type="f" corresp="#s7:l2">sinne</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Gebruyckt sijn eygen <rhyme label="c" type="m">handt</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">In rasernye <rhyme label="c" type="m" corresp="#s7:l5">brandt</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Als een verwoedt <rhyme label="c" type="m" corresp="#s7:l5">Tyrant</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">In dit seer vrome <rhyme label="a" type="m">stuck</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Hebt ghy u wel <rhyme label="b" type="f">gequeten</rhyme>;</l>
        <l id="s8:l3" met="3" type="-+">Want ghy kost u <rhyme label="a" type="m" corresp="#s8:l1">geluck</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Des Hemelsch niet <rhyme label="b" type="f" corresp="#s8:l2">vergeten</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Soo dat des lichaems <rhyme label="c" type="m">doodt</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">V niet en Brocht in <rhyme label="c" type="m" corresp="#s8:l5">noodt</rhyme>;</l>
        <l id="s8:l7" met="3" type="-+">Maer tot Godt Vaders <rhyme label="c" type="m" corresp="#s8:l5">schoot</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Bidt voor ons <rhyme label="a" type="m">Barbara</rhyme>!</l>
        <l id="s9:l2" met="3" type="-+">Dat Godt ons oock wil <rhyme label="b" type="f">geven</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Den segen der <rhyme label="a" type="m" corresp="#s9:l1">gena</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Om niet berooft van ‘t <rhyme label="b" type="f" corresp="#s9:l2">leven</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Te worden al te <rhyme label="c" type="m">snel</rhyme>.</l>
        <l id="s9:l6" met="3" type="-+">Maer door het biechten <rhyme label="c" type="m" corresp="#s9:l5">wel</rhyme>.</l>
        <l id="s9:l7" met="3" type="-+">Beschermt ons voor de <rhyme label="c" type="m" corresp="#s9:l5">hell</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

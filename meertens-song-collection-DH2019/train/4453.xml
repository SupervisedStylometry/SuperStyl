    <melody>Kon ik de maneschijn bedekken</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Johan Fruytiers</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DIe hier den Heer almachtich <rhyme label="a" type="f">vresen</rhyme>//</l>
        <l id="s1:l2" met="4" type="-+">die dorsten nae goet <rhyme label="b" type="m">onderrecht</rhyme>//</l>
        <l id="s1:l3" met="4" type="-+">Ghenade crijghen sy door desen// <rhyme label="a" type="f" corresp="#s1:l1">wie</rhyme></l>
        <l id="s1:l4" met="4" type="-+">hem soo schict tsy heer of <rhyme label="b" type="m" corresp="#s1:l2">knecht</rhyme>//</l>
        <l id="s1:l5" met="3" type="-+">wie hier na Godts woort <rhyme label="c" type="m">vraecht</rhyme>//</l>
        <l id="s1:l6" met="3" type="-+">den Heer seer <rhyme label="c" type="m" corresp="#s1:l5">behaecht</rhyme>//</l>
        <l id="s1:l7" met="6" type="-+">en hy vercrijght se rijclijc daer hy hem hier na <rhyme label="c" type="m" corresp="#s1:l5">draecht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Die t'woordt van herten niet soect <rhyme label="a" type="f">seere</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Daer door hy dan ghearghert <rhyme label="b" type="m">wort</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Wie Godt vreest treft de rechte <rhyme label="a" type="f" corresp="#s2:l1">leere</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Gherechticheyt hy dan wt <rhyme label="b" type="m" corresp="#s2:l2">stort</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Sy sal oock lichten <rhyme label="c" type="m">claer</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Al hier int <rhyme label="c" type="m" corresp="#s2:l5">openbaer</rhyme>,</l>
        <l id="s2:l7" met="6" type="-+">Wt liefden sal hem vallen gheen dingh al hier te <rhyme label="c" type="m" corresp="#s2:l5">swaer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">De godtloos en is niet <rhyme label="a" type="f">gheren</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Ghestraft al van sijn quade <rhyme label="b" type="m">feyt</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Hoort hijt, hy weet hem te <rhyme label="a" type="f" corresp="#s3:l1">gheneren</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Met een exempel hijt <rhyme label="b" type="m" corresp="#s3:l2">afleyt</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Maer een vernuft man <rhyme label="c" type="m">staet</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Altijt in wijsen <rhyme label="c" type="m" corresp="#s3:l5">raet</rhyme>,</l>
        <l id="s3:l7" met="6" type="-+">Hy en veracht gheen straffe, maer schuut daer door het <rhyme label="c" type="m" corresp="#s3:l5">quaet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Al sonder raet wilt niet <rhyme label="a" type="f">beghinnen</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Want sulcx dickmael hier namaels <rhyme label="b" type="m">rout</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Den quaden wech wilt niet <rhyme label="a" type="f" corresp="#s4:l1">beminnen</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Daer ghy v schenen stoten <rhyme label="b" type="m" corresp="#s4:l2">sout</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Al schijnt hy somtijts <rhyme label="c" type="m">goet</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Hy glitst onder de <rhyme label="c" type="m" corresp="#s4:l5">voet</rhyme>,</l>
        <l id="s4:l7" met="6" type="-+">Ja voor v eyghen kinderen dienet oock <rhyme label="c" type="m" corresp="#s4:l5">ghehoet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">In al tgheen dat ghy sult <rhyme label="a" type="f">voornemen</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Betrout altijt op uwen <rhyme label="b" type="m">Godt</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Van herten volght sijn soete <rhyme label="a" type="f" corresp="#s5:l1">temen</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Ende sijn goddelijck <rhyme label="b" type="m" corresp="#s5:l2">ghebodt</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Die op hem hier staet <rhyme label="c" type="m">vast</rhyme></l>
        <l id="s5:l6" met="3" type="-+">En op sijn woorden <rhyme label="c" type="m" corresp="#s5:l5">past</rhyme>,</l>
        <l id="s5:l7" met="6" type="-+">Niet lichtelijck en sietmen dat hy hier coemt in <rhyme label="c" type="m" corresp="#s5:l5">last</rhyme>.</l>
      </lg>
    </lg>
  </text>

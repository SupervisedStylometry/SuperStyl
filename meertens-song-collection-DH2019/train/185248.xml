  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="+-">Och soet <rhyme label="a" type="f">versamen</rhyme></l>
        <l id="s1:l2" met="2" type="+-">In s Heeren <rhyme label="a" type="f" corresp="#s1:l1">name</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Daer mensch hem selfs is <rhyme label="b" type="f">uytgegangen</rhyme></l>
        <l id="s1:l4" met="5" type="-+">Daer liefde soet het herte heeft <rhyme label="b" type="f" corresp="#s1:l3">bevangen</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Daer Goddelijcke <rhyme label="c" type="m">deught</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">d’Inwendigheyt <rhyme label="c" type="m" corresp="#s1:l5">verheught</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Och wat soeter <rhyme label="c" type="m" corresp="#s1:l5">geneught</rhyme>,</l>
        <l id="s1:l8" met="2" type="-+">Wert daer <rhyme label="b" type="f" corresp="#s1:l3">ontfanghen</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="+-">Waer sal men ‘t <rhyme label="a" type="f">vinden</rhyme></l>
        <l id="s2:l2" met="2" type="+-">Daer g’lijck <rhyme label="a" type="f" corresp="#s2:l1">ghesinden</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Als spiegelt reyn malkander <rhyme label="b" type="f">schouwen</rhyme>,</l>
        <l id="s2:l4" met="5" type="-+">Daer liefd’ en vreed’ is en een goet <rhyme label="b" type="f" corresp="#s2:l3">betrouwen</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Daer elck voor ander <rhyme label="c" type="m">buycht</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">‘t Gemoet te samen <rhyme label="c" type="m" corresp="#s2:l5">tuycht</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">En daermen honigh <rhyme label="c" type="m" corresp="#s2:l5">suycht</rhyme>,</l>
        <l id="s2:l8" met="2" type="-+">Met soet <rhyme label="b" type="f" corresp="#s2:l3">bedouwen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="+-">Ootmoet en <rhyme label="a" type="f">lijden</rhyme></l>
        <l id="s3:l2" met="2" type="+-">Verweckt <rhyme label="a" type="f" corresp="#s3:l1">verblyden</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Ghedult dat is een edel <rhyme label="b" type="f">gave</rhyme>,</l>
        <l id="s3:l4" met="5" type="-+">Wie niet geduldig is, wort tot een <rhyme label="b" type="f" corresp="#s3:l3">slave</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Een slave van den <rhyme label="c" type="m">twist</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Wie hier op niet en <rhyme label="c" type="m" corresp="#s3:l5">gist</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Sijn schoone tijtg <rhyme label="c" type="m" corresp="#s3:l5">verquist</rhyme>,</l>
        <l id="s3:l8" met="2" type="-+">En ‘s herten <rhyme label="b" type="f" corresp="#s3:l3">have</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="+-">Ick geef u <rhyme label="a" type="f">vrede</rhyme>,</l>
        <l id="s4:l2" met="2" type="+-">Seyt Christus <rhyme label="a" type="f" corresp="#s4:l1">mede</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Niet als de werelt vol van <rhyme label="b" type="f">gheschille</rhyme>,</l>
        <l id="s4:l4" met="5" type="-+">Des werelts vreed’ bestaet in eyghen <rhyme label="b" type="f" corresp="#s4:l3">wille</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Dan houtse haer <rhyme label="c" type="m">vernoeght</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Christus hem selven <rhyme label="c" type="m" corresp="#s4:l5">voeght</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Tot lyden, en hy <rhyme label="c" type="m" corresp="#s4:l5">droeght</rhyme></l>
        <l id="s4:l8" met="2" type="-+">‘t Cruys soet en <rhyme label="b" type="f" corresp="#s4:l3">stille</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="+-">Door het <rhyme label="a" type="f">verneeren</rhyme></l>
        <l id="s5:l2" met="2" type="+-">Canmen <rhyme label="a" type="f" corresp="#s5:l1">soudeeren</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Twee herten door het vyers <rhyme label="b" type="f">bereyden</rhyme>,</l>
        <l id="s5:l4" met="5" type="-+">Maer sonder vyer, salmen vergeefs <rhyme label="b" type="f" corresp="#s5:l3">arbeyden</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Smeltingh moeter <rhyme label="c" type="m">gheschien</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Versteentheyt moet men <rhyme label="c" type="m" corresp="#s5:l5">vlien</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">En eyghen wijsheyt <rhyme label="c" type="m" corresp="#s5:l5">mien</rhyme>,</l>
        <l id="s5:l8" met="2" type="-+">Want sy doet <rhyme label="b" type="f" corresp="#s5:l3">scheyden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="+-">Liefd’ doet <rhyme label="a" type="f">vereenen</rhyme>,</l>
        <l id="s6:l2" met="2" type="+-">Ootmoet <rhyme label="a" type="f" corresp="#s6:l1">vercleenen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Gods wijsheyt is altijt <rhyme label="b" type="f">sachtmoedich</rhyme>,</l>
        <l id="s6:l4" met="5" type="-+">Maer eyghen wijsheydt hout haer seer <rhyme label="b" type="f" corresp="#s6:l3">ongoedich</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Toe geven kan sy <rhyme label="c" type="m">miet</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Want s’ op haer selven <rhyme label="c" type="m" corresp="#s6:l5">siet</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Liefd’ en soeckt geen <rhyme label="c" type="m" corresp="#s6:l5">geniet</rhyme>,</l>
        <l id="s6:l8" met="2" type="-+">Maer is <rhyme label="b" type="f" corresp="#s6:l3">uytvloedich</rhyme>.</l>
      </lg>
    </lg>
  </text>

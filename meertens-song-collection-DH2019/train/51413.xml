  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Ik ben laatst in het veld <rhyme label="a" type="f">gezeten</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">By een schoone <rhyme label="b" type="m">Herderin</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Ik kon haar liefde niet <rhyme label="a" type="f" corresp="#s1:l1">vergeten</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">En schonk haar myn teed're <rhyme label="b" type="m" corresp="#s1:l2">min</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Phielida laat zy zich <rhyme label="c" type="f">noemen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">In het veld is zy <rhyme label="d" type="m">geteeld</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Op haar schoonheid kan zy <rhyme label="c" type="f" corresp="#s1:l5">roemen</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Het is een Venus <rhyme label="d" type="m" corresp="#s1:l6">evenbeeld</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Krullend haar en zwarte <rhyme label="a" type="f">oogen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Witte tanden, roode <rhyme label="b" type="m">mond</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Dra was ik tot haar <rhyme label="a" type="f" corresp="#s2:l1">bewogen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">want zy heeft myn hart <rhyme label="b" type="m" corresp="#s2:l2">doorwond</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">wie kan zulk een schoone <rhyme label="c" type="f">haten</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Zuchtend lag ik in haar <rhyme label="d" type="m">schoot</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Nimmer zal ik haar <rhyme label="c" type="f" corresp="#s2:l5">verlaten</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Steeds getrouw tot in den <rhyme label="d" type="m" corresp="#s2:l6">nood</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Hare lieve roode <rhyme label="a" type="f">kaken</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">En de boezems van myn <rhyme label="b" type="m">bruid</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Doen my steeds van wellust <rhyme label="a" type="f" corresp="#s3:l1">blaken</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">want daar druipt een Nectar <rhyme label="b" type="m" corresp="#s3:l2">uit</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Ja een Nectar mag het <rhyme label="c" type="f">heeten</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Zelf een balsem voor myn <rhyme label="d" type="m">hart</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Nimmer zai ik haar <rhyme label="c" type="f" corresp="#s3:l5">vergeten</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">'k Ben door min geheel <rhyme label="d" type="m" corresp="#s3:l6">verward</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">wat kon my haar min <rhyme label="a" type="f">verwarmen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Teeder lokte zy my <rhyme label="b" type="m">aan</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Vlechtend lag ik in haar <rhyme label="a" type="f" corresp="#s4:l1">armen</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Ik kon haar liefde niet <rhyme label="b" type="m" corresp="#s4:l2">weerstaan</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Philieda myn <rhyme label="c" type="f">uitverkoren</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Sprak myn mond steeds staam'lend <rhyme label="d" type="m">uit</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">wy zyn voor elka√¢r <rhyme label="c" type="f" corresp="#s4:l5">geboren</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Ik verkies uw tot myn <rhyme label="d" type="m" corresp="#s4:l6">bruid</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Zy is vol <rhyme label="a" type="f">bevalligheden</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Boven dien schonk haar het <rhyme label="b" type="m">lot</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Brave deugden goede <rhyme label="a" type="f" corresp="#s5:l1">zeden</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">wierden haar verleent door <rhyme label="b" type="m" corresp="#s5:l2">God</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Zag my wel een troon <rhyme label="c" type="f">bezitten</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">want zy schynt een <rhyme label="d" type="m">koningin</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">wie kan op haar schoonheid <rhyme label="c" type="f" corresp="#s5:l5">zitten</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">Nooit volprezen door de <rhyme label="d" type="m" corresp="#s5:l6">min</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Tot besluit gy <rhyme label="a" type="f">herderinnen</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">die door onschuld zyt <rhyme label="b" type="m">verzeld</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">wie uw ziet moet uw <rhyme label="a" type="f" corresp="#s6:l1">beminnen</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">By uw schaapjes in het <rhyme label="b" type="m" corresp="#s6:l2">veld</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Vlecht nu kranzen van <rhyme label="c" type="f">laauwrieren</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">O gy vlugge <rhyme label="d" type="m">herderschaar</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">wilt met vreugd dit echtfeest <rhyme label="c" type="f" corresp="#s6:l5">vieren</rhyme></l>
        <l id="s6:l8" met="4" type="+-">Van dit jong verboden <rhyme label="d" type="m" corresp="#s6:l6">paar</rhyme>.</l>
      </lg>
    </lg>
  </text>

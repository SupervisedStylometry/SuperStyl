  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">IN Cana <rhyme label="a" type="f">Galileën</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Daer was een <rhyme label="b" type="m">Bruylofts-Feest</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Alwaer uyt seeker <rhyme label="a" type="f" corresp="#s1:l1">reën</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Is Wijn te kort <rhyme label="b" type="m" corresp="#s1:l2">geweest</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Sijn Moeder met <rhyme label="c" type="f">betrouwe</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Seyt, s'hebben geenen <rhyme label="d" type="m">Wijn</rhyme>.</l>
        <l id="s1:l7" met="3" type="-+">Hy seyt weerom, o <rhyme label="c" type="f" corresp="#s1:l5">Vrouwe</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Wat raekt het u en <rhyme label="d" type="m" corresp="#s1:l6">mijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Sijn Moeder seydt, <rhyme label="a" type="f">Dienaren</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Doet al dat hy u <rhyme label="b" type="m">seydt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">En daer ses Kruycken <rhyme label="a" type="f" corresp="#s2:l1">waren</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Na de gewoont <rhyme label="b" type="m" corresp="#s2:l2">bereydt</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Hy seyd' met <rhyme label="c" type="f">stilligheeden</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Dees al vol water <rhyme label="d" type="m">brengkt</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">(Het welke sy ook <rhyme label="c" type="f" corresp="#s2:l5">deeden</rhyme>:)</l>
        <l id="s2:l8" met="3" type="-+">Nu den Hoofmeester <rhyme label="d" type="m" corresp="#s2:l6">schenkt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Sy den Hoof-meester <rhyme label="a" type="f">schonken</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Wijn die eerst water <rhyme label="b" type="m">was</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Welk, als hy heeft <rhyme label="a" type="f" corresp="#s3:l1">gedronken</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Niet weetend', prees hem <rhyme label="b" type="m" corresp="#s3:l2">ras</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Een ander schenkt van 't <rhyme label="c" type="f">beste</rhyme></l>
        <l id="s3:l6" met="3" type="-+">In 't eerst, en daer na <rhyme label="d" type="m">sleght</rhyme>.</l>
        <l id="s3:l7" met="3" type="-+">Gy Bruygom houdt tot 't <rhyme label="c" type="f" corresp="#s3:l5">leste</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Seydt hy, goe' wijn <rhyme label="d" type="m" corresp="#s3:l6">opreght</rhyme>.</l>
      </lg>
    </lg>
  </text>

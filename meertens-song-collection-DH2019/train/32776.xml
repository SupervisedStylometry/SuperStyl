    <melody>Schoon lief wil mij troost geven</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Heyligh Gheest <rhyme label="a" type="f">ghepresen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Een met des Vaders <rhyme label="a" type="f" corresp="#s1:l1">wesen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Een Godt oock met den <rhyme label="b" type="m">Soon</rhyme>;</l>
        <l id="s1:l4" met="3" type="-+">Wilt haestigh op ons <rhyme label="c" type="f">daelen</rhyme>?</l>
        <l id="s1:l5" met="3" type="-+">Ons herten comt door <rhyme label="c" type="f" corresp="#s1:l4">straelen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Komt blijft daar metter <rhyme label="b" type="m" corresp="#s1:l3">woon</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ons tongh, mont, en <rhyme label="a" type="f">ghedachten</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En onser zielen <rhyme label="a" type="f" corresp="#s2:l1">krachten</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Belijden u seer <rhyme label="b" type="m">goet</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Doet 't vier der liefden <rhyme label="c" type="f">branden</rhyme>;</l>
        <l id="s2:l5" met="3" type="-+">Waer door oock <rhyme label="c" type="f" corresp="#s2:l4">[...]handen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Ons naesten branden <rhyme label="b" type="m" corresp="#s2:l3">doet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Gunt ons dat <rhyme label="a" type="f">allegader</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">O goedertieren <rhyme label="a" type="f" corresp="#s3:l1">Vader</rhyme></l>
        <l id="s3:l3" met="3" type="-+">O Soon <rhyme label="b" type="m">ghebenedijt</rhyme>;</l>
        <l id="s3:l4" met="3" type="-+">Die met den Heylighen <rhyme label="c" type="f">Gheeste</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Ons trooster <rhyme label="c" type="f" corresp="#s3:l4">aldermeeste</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Leeft en bestiert <rhyme label="b" type="m" corresp="#s3:l3">altijt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

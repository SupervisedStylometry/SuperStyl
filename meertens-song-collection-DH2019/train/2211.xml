  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">NU mijn <rhyme label="a" type="f">Celestyne</rhyme></l>
        <l id="s1:l2" met="3" type="+-">Noch aan d'Amstel <rhyme label="b" type="m">leeft</rhyme>,</l>
        <l id="s1:l3" met="3" type="+-">En na duisend <rhyme label="a" type="f" corresp="#s1:l1">pijne</rhyme></l>
        <l id="s1:l4" met="3" type="+-">My haar weer-min <rhyme label="b" type="m" corresp="#s1:l2">geeft</rhyme>,</l>
        <l id="s1:l5" met="3" type="+-">Is mijn Hoop in 't <rhyme label="c" type="f">bloeyen</rhyme></l>
        <l id="s1:l6" met="4" type="+-">En de Minne-Moeder <rhyme label="d" type="m">lacht</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Titans morgen-straalen <rhyme label="c" type="f" corresp="#s1:l5">groeyen</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">En sijn konst verdrijft de <rhyme label="d" type="m" corresp="#s1:l6">nacht</rhyme>.</l>
        <l id="s1:l9" met="4" type="+-">En sijn konst verdrijft de <rhyme label="d" type="m" corresp="#s1:l6">nacht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">'t Noodlot is aan 't <rhyme label="a" type="f">wenden</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">En mijn quaal heeft <rhyme label="b" type="m">uyt</rhyme>.</l>
        <l id="s2:l3" met="3" type="+-">Traantjes die so <rhyme label="a" type="f" corresp="#s2:l1">renden</rhyme></l>
        <l id="s2:l4" met="3" type="+-">Worden nu <rhyme label="b" type="m" corresp="#s2:l2">gestuyt</rhyme>;</l>
        <l id="s2:l5" met="3" type="+-">Siel, en Hart, en <rhyme label="c" type="f">Sinnen</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Sijn nu door de tijd <rhyme label="d" type="m">gestilt</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Nu ik Celestyn mag <rhyme label="c" type="f" corresp="#s2:l5">minnen</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Want sy en den Heemel <rhyme label="d" type="m" corresp="#s2:l6">wilt</rhyme>.</l>
        <l id="s2:l9" met="4" type="+-">Want sy en den Heemel <rhyme label="d" type="m" corresp="#s2:l6">wilt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Ey verschoon my <rhyme label="a" type="f">Schoone</rhyme>,</l>
        <l id="s3:l2" met="3" type="+-">Viel ik u te <rhyme label="b" type="m">hart</rhyme>,</l>
        <l id="s3:l3" met="3" type="+-">Om uw min te <rhyme label="a" type="f" corresp="#s3:l1">toone'</rhyme>:</l>
        <l id="s3:l4" met="3" type="+-">Ik wierd door de <rhyme label="b" type="m" corresp="#s3:l2">smart</rhyme></l>
        <l id="s3:l5" met="3" type="+-">Van het <rhyme label="c" type="f">minne-schichje</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Dat ik droeg so <rhyme label="d" type="m">aangeport</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">En gejaagt van Paphos <rhyme label="c" type="f" corresp="#s3:l5">wichje</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Die in 't vrijen Raadsman <rhyme label="d" type="m" corresp="#s3:l6">word</rhyme>.</l>
        <l id="s3:l9" met="4" type="+-">Die in 't vrijen Raadsman <rhyme label="d" type="m" corresp="#s3:l6">word</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">Nu roem ik <rhyme label="a" type="f">Beminde</rhyme></l>
        <l id="s4:l2" met="3" type="+-">Uw <rhyme label="b" type="m">afkeerigheid</rhyme>,</l>
        <l id="s4:l3" met="3" type="+-">Dat gy in de <rhyme label="a" type="f" corresp="#s4:l1">blinde</rhyme></l>
        <l id="s4:l4" met="3" type="+-">Hebt geen knoop <rhyme label="b" type="m" corresp="#s4:l2">geleyt</rhyme>.</l>
        <l id="s4:l5" met="3" type="+-">Sulk een Trow met <rhyme label="c" type="f">sinne</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Als de onse <rhyme label="d" type="m">weeder-zijd</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Groeit door Min en <rhyme label="c" type="f" corresp="#s4:l5">Weeder-minne</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">En verduurt de tijd en <rhyme label="d" type="m" corresp="#s4:l6">nijd</rhyme>.</l>
        <l id="s4:l9" met="4" type="+-">En verduurt de tijd en <rhyme label="d" type="m" corresp="#s4:l6">nijd</rhyme>.</l>
      </lg>
    </lg>
  </text>

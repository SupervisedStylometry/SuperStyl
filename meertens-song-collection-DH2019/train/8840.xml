    <melody>Es ist das Heil uns kommen her</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ICk wacht op GOdt, die helpet <rhyme label="a" type="m">my</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Van hem coemt <rhyme label="b" type="f">Salicheede</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Want mijn Troost end' Toevlucht is <rhyme label="a" type="m" corresp="#s1:l1">hy</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Mijn Bystandt t'Alder <rhyme label="b" type="f" corresp="#s1:l2">steede</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Die my bewaert, dat my gheen <rhyme label="c" type="m">Val</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Hoe groot hy is, Omstooten <rhyme label="c" type="m" corresp="#s1:l5">sal</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Alleen door syn <rhyme label="d" type="f">Ghenade</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Hoe langh' wilt ghy doch al <rhyme label="a" type="m">gelijck</rhyme></l>
        <l id="s2:l2" met="3" type="-+">So staen nae een t' <rhyme label="b" type="f">Ontlijven</rhyme>?</l>
        <l id="s2:l3" met="4" type="-+">En pooghen hem wt synen <rhyme label="a" type="m" corresp="#s2:l1">Rijck</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Te stooten end' <rhyme label="b" type="f" corresp="#s2:l2">verdrijven</rhyme>?</l>
        <l id="s2:l5" met="4" type="-+">Hem maeckend' als een Wandt die <rhyme label="c" type="m">hangt</rhyme></l>
        <l id="s2:l6" met="4" type="-+">V Leugen Mont schoon woorden <rhyme label="c" type="m" corresp="#s2:l5">langt</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Maer t'Herte vloeckt van <rhyme label="d" type="f">binnen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Mijn Siel gaet staen op Godt den <rhyme label="a" type="m">Heer</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Die is mijn Hoop <rhyme label="b" type="f">alleene</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Mijn Troost, mijn Hulp, Schilt end' <rhyme label="a" type="m" corresp="#s3:l1">geweer</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Mijn Heyl, en anders <rhyme label="b" type="f" corresp="#s3:l2">geene</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Daerom so Hoopt op hem <rhyme label="c" type="m">altijdt</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">En acht op groote Luyden <rhyme label="c" type="m" corresp="#s3:l5">niet</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Sy feylen en <rhyme label="d" type="f">Bedrieghen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Sy weghen weynich als men <rhyme label="a" type="m">siet</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Wilt op gheen Macht <rhyme label="b" type="f">betrouwen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Aen Onrecht, (want het is doch <rhyme label="a" type="m" corresp="#s4:l1">niet</rhyme>)</l>
        <l id="s4:l4" met="3" type="-+">Wilt u daer niet aen <rhyme label="b" type="f" corresp="#s4:l2">houwen</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Vercrijcht ghy Rijckdom, tijdtlijck <rhyme label="c" type="m">Goet</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">V Hert en draegh' daer op gheen <rhyme label="c" type="m" corresp="#s4:l5">Moet</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">So salt u niet <rhyme label="d" type="f">verleyden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Godt heeft een Woort gesproken <rhyme label="a" type="m">reyn</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Dat is my wel <rhyme label="b" type="f">indachtich</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Dat anders gheen dan hy <rhyme label="a" type="m" corresp="#s5:l1">Alleyn</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Is HEEr end' Godt <rhyme label="b" type="f" corresp="#s5:l2">Almachtich</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">HEER ghy een yeg'lijck recht <rhyme label="c" type="m">betaelt</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Sy hy verdient end' u Aff <rhyme label="c" type="m" corresp="#s5:l5">haelt</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Ghy HEERE zijt <rhyme label="d" type="f">ghenadich</rhyme>.</l>
      </lg>
    </lg>
  </text>

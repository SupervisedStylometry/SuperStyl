  <author>Willem de Swaen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Ick koom u geluck <rhyme label="a" type="f">aenbieden</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Een geluck dat veel is <rhyme label="b" type="m">waerd</rhyme>:</l>
        <l id="s1:l3" met="4" type="+-">Groot geluck Gehoude <rhyme label="a" type="f" corresp="#s1:l1">Lieden</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Met dien Staet die ghy <rhyme label="b" type="m" corresp="#s1:l2">aenvaert</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">Ick u toewensch soet <rhyme label="c" type="m">gelaet</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">'k Wensch u lief—de in uw' <rhyme label="c" type="m" corresp="#s1:l5">Staet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Christus heeft den Echt <rhyme label="a" type="f">verheven</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Tot een waerdigh <rhyme label="b" type="m">Sacrament</rhyme>:</l>
        <l id="s2:l3" met="4" type="+-">Des wilt wel den Echt <rhyme label="a" type="f" corresp="#s2:l1">beleven</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Siet dat ghy die niet en <rhyme label="b" type="m" corresp="#s2:l2">schendt</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">'k Wensch dat ghy die wel <rhyme label="c" type="m">beleeft</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Dat ghy niemandt opspraeck <rhyme label="c" type="m" corresp="#s2:l5">geeft</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Ghy dien Staet hebt <rhyme label="a" type="f">aengenomen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Die van Godt is <rhyme label="b" type="m">ingestelt</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Op dat die uyt u <rhyme label="a" type="f" corresp="#s3:l1">voortkomen</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Krijgen souden 's Hemels <rhyme label="b" type="m" corresp="#s3:l2">veldt</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Ick u toewensch groot <rhyme label="c" type="m">geluck</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">'k wensch u blijschap in uw' <rhyme label="c" type="m" corresp="#s3:l5">druck</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Ghy sult hebben veel te <rhyme label="a" type="f">lijden</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Ghy sult hebben veel te <rhyme label="b" type="m">doen</rhyme>;</l>
        <l id="s4:l3" met="4" type="+-">Maer, ey! wilt kloeckmoedigh <rhyme label="a" type="f" corresp="#s4:l1">strijden</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Wilt u t'saem tot deughden <rhyme label="b" type="m" corresp="#s4:l2">spoe'n</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">Ick u toewensch <rhyme label="c" type="m">Lijdtsaemheydt</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Die u tot den Hemel <rhyme label="c" type="m" corresp="#s4:l5">leydt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Wilt wel letten op de <rhyme label="a" type="f">Vruchten</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Die u Godt verleenen <rhyme label="b" type="m">sal</rhyme>:</l>
        <l id="s5:l3" met="4" type="+-">Leert van jonghs de sond' haer <rhyme label="a" type="f" corresp="#s5:l1">vluchten</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Weest met haer niet al te <rhyme label="b" type="m" corresp="#s5:l2">mal</rhyme>:</l>
        <l id="s5:l5" met="4" type="+-">Niet te groot uw' Kind'ren <rhyme label="c" type="m">acht</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Ick u toewensch goede <rhyme label="c" type="m" corresp="#s5:l5">wacht</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Wilt malkanders lasten <rhyme label="a" type="f">dragen</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Vrouw van Man, en Man van <rhyme label="b" type="m">Vrouw</rhyme>:</l>
        <l id="s6:l3" met="4" type="+-">Weest eendrachtigh all' uw' <rhyme label="a" type="f" corresp="#s6:l1">dagen</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">En in blijschap, en in <rhyme label="b" type="m" corresp="#s6:l2">rouw</rhyme>.</l>
        <l id="s6:l5" met="4" type="+-">Ick u wensch een soet <rhyme label="c" type="m">gemoedt</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">'t Welck al 't quaedt verdragen <rhyme label="c" type="m" corresp="#s6:l5">doet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">'k Wensch ô Vrouwen! dat uw' <rhyme label="a" type="f">Mannen</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Sober zijn, en 't huys <rhyme label="b" type="m">voor-staen</rhyme>:</l>
        <l id="s7:l3" met="4" type="+-">Wilt met hen ghy t'samen <rhyme label="a" type="f" corresp="#s7:l1">spannen</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Elck sijn werck; soo sal 't wel <rhyme label="b" type="m" corresp="#s7:l2">gaen</rhyme>.</l>
        <l id="s7:l5" met="4" type="+-">'k Wensch dat sy vrough komen <rhyme label="c" type="m">t'huys</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">En verlaten't vuyl' <rhyme label="c" type="m" corresp="#s7:l5">gespuys</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">'k Wensch ô Mannen! dat uw' <rhyme label="a" type="f">Vrouwen</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Swijgen stil 't welck t'huys <rhyme label="b" type="m">geschiet</rhyme>;</l>
        <l id="s8:l3" met="4" type="+-">Soo sal 't namaels haer niet <rhyme label="a" type="f" corresp="#s8:l1">rouwen</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">'t Huys ontgaen sal groot <rhyme label="b" type="m" corresp="#s8:l2">verdriet</rhyme>.</l>
        <l id="s8:l5" met="4" type="+-">'k Wensch dat ghy, en Vrouw te <rhyme label="c" type="m">saem</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Zijt malkander <rhyme label="c" type="m" corresp="#s8:l5">aengenaem</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Wilt soo leven t'allen <rhyme label="a" type="f">tijden</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Dat ghy van de sonden <rhyme label="b" type="m">vlucht</rhyme>:</l>
        <l id="s9:l3" met="4" type="+-">Op dat ghy u meught <rhyme label="a" type="f" corresp="#s9:l1">verblijden</rhyme></l>
        <l id="s9:l4" met="4" type="+-">Eeuwelijck met uwe <rhyme label="b" type="m" corresp="#s9:l2">Vrucht</rhyme>.</l>
        <l id="s9:l5" met="4" type="+-">Ick u wensch het <rhyme label="c" type="m">Hemelrijck</rhyme></l>
        <l id="s9:l6" met="4" type="+-">Waer ghy Godt sult wesen <rhyme label="c" type="m" corresp="#s9:l5">g'lijck</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

    <melody>Hoor toe al in het gemeen</melody>
    <categories>
      <category translation="seasons and annual events">jaarkring</category>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">AOort toe broeders al <rhyme label="a" type="m">ghemeyn</rhyme></l>
        <l id="s1:l2" met="3" type="-+">En laet ons vrolick <rhyme label="b" type="f">singhen</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Ons is gheboren een kindeken <rhyme label="a" type="m" corresp="#s1:l1">cleyn</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Die den viant coemt <rhyme label="b" type="f" corresp="#s1:l2">bedwinghen</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Wie hoorde oyt blijder <rhyme label="c" type="f">mare</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Hy heeft vertreden thooft vant <rhyme label="d" type="m">serpent</rhyme></l>
        <l id="s1:l7" met="4" type="-+">En heeft den viant ende de doot <rhyme label="d" type="m" corresp="#s1:l6">gheschent</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Met desen nieuwen <rhyme label="c" type="f" corresp="#s1:l5">Iare</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">God heeft de weerelt so <rhyme label="a" type="m">bemint</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Wt louter <rhyme label="b" type="f">charitaten</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Hy heeft ons ghegheuen zijn eyghen <rhyme label="a" type="m" corresp="#s2:l1">kint</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Wt liefden bouen <rhyme label="b" type="f" corresp="#s2:l2">maten</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Tot behulp van elck <rhyme label="c" type="f">sondare</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Heeft hy ghestort zijn dierbaer <rhyme label="d" type="m">bloet</rhyme></l>
        <l id="s2:l7" met="4" type="-+">Dies nv elck wel verhuecht zijn <rhyme label="d" type="m" corresp="#s2:l6">moet</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Met desen nieuwen <rhyme label="c" type="f" corresp="#s2:l5">Iare</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Dit is het serpent al van <rhyme label="a" type="m">metael</rhyme></l>
        <l id="s3:l2" met="3" type="-+">In die woestyne <rhyme label="b" type="f">verheuen</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Coemt ghy ghewonde <rhyme label="a" type="m" corresp="#s3:l1">altemael</rhyme></l>
        <l id="s3:l4" met="3" type="-+">U wort confoort <rhyme label="b" type="f" corresp="#s3:l2">ghegheuen</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Het is dlicht dwelck schijnt seer <rhyme label="c" type="f">clare</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Als middelaer voor den Uader hy <rhyme label="d" type="m">staet</rhyme></l>
        <l id="s3:l7" met="4" type="-+">Alleen v voldoeninghe en <rhyme label="d" type="m" corresp="#s3:l6">Aduocaet</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Met desen nieuwen <rhyme label="c" type="f" corresp="#s3:l5">Iare</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Den ouden mensche nv wt <rhyme label="a" type="m">doet</rhyme></l>
        <l id="s4:l2" met="3" type="-+">En wilt den nieuwen <rhyme label="b" type="f">aenueerden</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Aenmerct zijn beloften <rhyme label="a" type="m" corresp="#s4:l1">soet</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Sijn woorden houdt in <rhyme label="b" type="f" corresp="#s4:l2">weerden</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Coemt ghy benoude <rhyme label="c" type="f">schare</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Uan Oost, West, en <rhyme label="d" type="m">Noort</rhyme></l>
        <l id="s4:l7" met="4" type="-+">En haelt alleen aen hem <rhyme label="d" type="m" corresp="#s4:l6">confoort</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Met desen nyeuwen <rhyme label="c" type="f" corresp="#s4:l5">Iare</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Die wercken des vleeschs nv wt <rhyme label="a" type="m">roeyt</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Die zijn des gheests <rhyme label="b" type="f">partije</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Als gulsicheyt ouerspel <rhyme label="a" type="m" corresp="#s5:l1">verfoeyt</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Gramschap ende <rhyme label="b" type="f" corresp="#s5:l2">hooueerdije</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Elck in duechden hem niet en <rhyme label="c" type="f">spare</rhyme></l>
        <l id="s5:l6" met="4" type="-+">Maer elck loop nv vlijtich tot <rhyme label="d" type="m">hem</rhyme></l>
        <l id="s5:l7" met="4" type="-+">Hy is gheboren in <rhyme label="d" type="m" corresp="#s5:l6">Bethlem</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Met desen nieuwen <rhyme label="c" type="f" corresp="#s5:l5">Iare</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Bemint uwen viant doet hem <rhyme label="a" type="m">goet</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Die v hier ter weerelt <rhyme label="b" type="f">benijen</rhyme></l>
        <l id="s6:l3" met="4" type="-+">God die Heere door zijn gracie <rhyme label="a" type="m" corresp="#s6:l1">soet</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Die sal v namaels <rhyme label="b" type="f" corresp="#s6:l2">verblijen</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Laet lichten v licht int <rhyme label="c" type="f">openbare</rhyme></l>
        <l id="s6:l6" met="4" type="-+">Al heeft die duysternisse <rhyme label="d" type="m">douerhant</rhyme></l>
        <l id="s6:l7" met="4" type="-+">Betrout in uwen vooruechter <rhyme label="d" type="m" corresp="#s6:l6">valliant</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Met desen nieuwen <rhyme label="c" type="f" corresp="#s6:l5">Iare</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Prince alle die lijdt hier <rhyme label="a" type="m">noot</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Wilt op den Heere <rhyme label="b" type="f">betrouwen</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Aenmerct dat Gods gracie is <rhyme label="a" type="m" corresp="#s7:l1">groot</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Op desen hoecksteen wilt <rhyme label="b" type="f" corresp="#s7:l2">bouwen</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Want zijn iock en is niet <rhyme label="c" type="f">sware</rhyme></l>
        <l id="s7:l6" met="4" type="-+">Wilt alle gauen van hem in dancke <rhyme label="d" type="m">ontfaen</rhyme></l>
        <l id="s7:l7" met="4" type="-+">Hy heuet ons wt liefde <rhyme label="d" type="m" corresp="#s7:l6">ghedaen</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Met desen nieuwen <rhyme label="c" type="f" corresp="#s7:l5">Iare</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

    <melody>Onze vader in hemelrijk</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ICk gheloof in God almachtich die <rhyme label="a" type="m">leeft</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Den Vader die gheschapen <rhyme label="a" type="m" corresp="#s1:l1">heeft</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Door zijn woort Hemel ende aerde <rhyme label="b" type="m">fris</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Wiens ghenade ouer ons eewich <rhyme label="b" type="m" corresp="#s1:l3">is</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Die ons Lijf, Siel en neeringhe <rhyme label="c" type="m">gheeft</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">En om zijns Soons wille lief <rhyme label="c" type="m" corresp="#s1:l5">heeft</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ick gheloof aen Jhesum Christum <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Den eenighen Godes Sone <rhyme label="a" type="m" corresp="#s2:l1">zoet</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Wt den Vader eewich gheboren <rhyme label="b" type="m">fijn</rhyme>:</l>
        <l id="s2:l4" met="4" type="-+">Door wien alle dinghen gheschapen <rhyme label="b" type="m" corresp="#s2:l3">zijn</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Die ons tot aller salicheyt <rhyme label="c" type="m">quam</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">En al ons sonden aen hem <rhyme label="c" type="m" corresp="#s2:l5">nam</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Die so dEnghel Gabriel seyde <rhyme label="a" type="m">eest</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Ontfanghen is vanden heylighen <rhyme label="a" type="m" corresp="#s3:l1">Gheest</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Van Maria die Maghet <rhyme label="b" type="m">reyn</rhyme>:</l>
        <l id="s3:l4" met="4" type="-+">God en Mensche is gheboren <rhyme label="b" type="m" corresp="#s3:l3">certeyn</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Die ons doort Euangelie <rhyme label="c" type="m">gent</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Sijns Vaders name maeckt <rhyme label="c" type="m" corresp="#s3:l5">bekent</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Die hem voor onse sondighe <rhyme label="a" type="m">daet</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Aen thout des cruycens offeren <rhyme label="a" type="m" corresp="#s4:l1">gaet</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Onder Pilato met <rhyme label="b" type="m">ghedult</rhyme>:</l>
        <l id="s4:l4" met="4" type="-+">Om te betalen onse <rhyme label="b" type="m" corresp="#s4:l3">schult</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Hy verlost ons al wt allen <rhyme label="c" type="m">noot</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Door zijn reyn bloet, en bitter <rhyme label="c" type="m" corresp="#s4:l5">doot</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Hy is ghestoruen, en gheleyt int <rhyme label="a" type="m">graf</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">En is ter Hellen ghedalet <rhyme label="a" type="m" corresp="#s5:l1">af</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Des duyuels rijck verstoort hy, en <rhyme label="b" type="m">werck</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">En bant hem daer met ketens <rhyme label="b" type="m" corresp="#s5:l3">sterck</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Dat hy ons niet meer letten <rhyme label="c" type="m">can</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Die Ihesum Christum hebben <rhyme label="c" type="m" corresp="#s5:l5">an</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Hy verrees vanden doot, ten derden <rhyme label="a" type="m">dach</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Die doot men haer macht verliesen <rhyme label="a" type="m" corresp="#s6:l1">sach</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Daer nae voer hy ten Hemelen <rhyme label="b" type="m">schier</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Heerlijck met zijnen scharen <rhyme label="b" type="m" corresp="#s6:l3">fier</rhyme>:</l>
        <l id="s6:l5" met="4" type="-+">Hy sidt ter Rechterhant des Vaders <rhyme label="c" type="m">fijn</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">En beschermt dat Christen Ghemeynte <rhyme label="c" type="m" corresp="#s6:l5">zijn</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Van daer hy wedercomen <rhyme label="a" type="m">sal</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Met grooter macht ende <rhyme label="a" type="m" corresp="#s7:l1">gheschal</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Om alle menschen te rechten <rhyme label="b" type="m">schoon</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">En elck te gheuen zijnen <rhyme label="b" type="m" corresp="#s7:l3">loon</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Den die gheloouen des Hemels <rhyme label="c" type="m">iolijt</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">En den Godtloosen der Hellen <rhyme label="c" type="m" corresp="#s7:l5">strijt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Ick geloof aen God den heyligen <rhyme label="a" type="m">Gheest</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Die ons leert kennen des waerheyts <rhyme label="a" type="m" corresp="#s8:l1">keest</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Die vanden Vader en Sone <rhyme label="b" type="m">wtgaet</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">En door den Propheten tot onser <rhyme label="b" type="m" corresp="#s8:l3">baet</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Spreeckt, en ghetuycht onsen gheeste <rhyme label="c" type="m">versint</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Dat Godt ons als zijn kinders <rhyme label="c" type="m" corresp="#s8:l5">bemint</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Een Christen Ghemeynte geloouich <rhyme label="a" type="m">fijn</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Daer in Christus dat hooft wil <rhyme label="a" type="m" corresp="#s9:l1">zijn</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">En blijft daer in tot in den <rhyme label="b" type="m">endt</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Door zijn woordt en zijn <rhyme label="b" type="m" corresp="#s9:l3">Sacrament</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Door deser gemeynschap Tghemeynte <rhyme label="c" type="m">heeft</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Die gheestelijcke gauen die Christus <rhyme label="c" type="m" corresp="#s9:l5">gheeft</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Alle sonden gheloouick in dit <rhyme label="a" type="m">leuen</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Door Christum alleen te zijn <rhyme label="a" type="m" corresp="#s10:l1">vergheuen</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Ons die ghecocht zijn met zijn <rhyme label="b" type="m">bloet</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">En ghedoopt in zijnen name <rhyme label="b" type="m" corresp="#s10:l3">zoet</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Waer met wy Godt behaghen <rhyme label="c" type="m">ghemeyn</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">En doort Ghelooue zijn wy <rhyme label="c" type="m" corresp="#s10:l5">reyn</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Ick ghelooue dat dit verstoruen <rhyme label="a" type="m">lijf</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Niet altijt inden doot blijft <rhyme label="a" type="m" corresp="#s11:l1">stijf</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Want tvleesch sal weder nieu <rhyme label="b" type="m">opstaen</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">En in dat eewich leuen <rhyme label="b" type="m" corresp="#s11:l3">gaen</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Daer wy by God in <rhyme label="c" type="m">eewicheyt</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">Met Christo hebben <rhyme label="c" type="m" corresp="#s11:l5">vrolijckheyt</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Die dit ghelooue heeft <rhyme label="a" type="m">voorwaer</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">In Godts ghenade staet <rhyme label="a" type="m" corresp="#s12:l1">eenpaer</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">En sal tot goede wercken <rhyme label="b" type="m">fijn</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Met liefde altijt gheneghen <rhyme label="b" type="m" corresp="#s12:l3">zijn</rhyme>,</l>
        <l id="s12:l5" met="4" type="-+">Dat gheeft ons Christe taller <rhyme label="c" type="m">tijt</rhyme>,</l>
        <l id="s12:l6" met="4" type="-+">Die des gheloouens grondtsteen <rhyme label="c" type="m" corresp="#s12:l5">zijt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">VVIlt, heyligh <rhyme label="a" type="m">Gheest</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Nu tot ons neder <rhyme label="b" type="f">dalen</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">Die <rhyme label="a" type="m" corresp="#s1:l1">aldermeest</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Ons herte cont <rhyme label="b" type="f" corresp="#s1:l2">doorstralen</rhyme>;</l>
        <l id="s1:l5" met="2" type="-+">Verleent ons <rhyme label="c" type="m">nu</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Vw' seven gaven <rhyme label="d" type="m">schoon</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Dat wy door <rhyme label="c" type="m" corresp="#s1:l5">u</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Verkrijghen goeden <rhyme label="d" type="m" corresp="#s1:l6">loon</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Wijsheydt ons <rhyme label="a" type="m">gheeft</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Dat wy naer Godt seer <rhyme label="b" type="f">haecken</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">En al dat <rhyme label="a" type="m" corresp="#s2:l1">leeft</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Om sijnent wil <rhyme label="b" type="f" corresp="#s2:l2">versaecken</rhyme></l>
        <l id="s2:l5" met="2" type="-+">Verleent ons <rhyme label="c" type="m">voordt</rhyme></l>
        <l id="s2:l6" met="3" type="-+">'t Verstandt dat wy <rhyme label="d" type="m">verstaen</rhyme></l>
        <l id="s2:l7" met="2" type="-+">Godts heyligh <rhyme label="c" type="m" corresp="#s2:l5">woordt</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">En dat't ghelooft gaet <rhyme label="d" type="m" corresp="#s2:l6">aen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Den gheest des <rhyme label="a" type="m">Raedt</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Wilt ons ten derden <rhyme label="b" type="f">gheven</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Om metter <rhyme label="a" type="m" corresp="#s3:l1">daedt</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Naer uwen raedt te <rhyme label="b" type="f" corresp="#s3:l2">leven</rhyme>.</l>
        <l id="s3:l5" met="2" type="-+">Toont ons wat <rhyme label="c" type="m">ghy</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Van ons begeert, o <rhyme label="d" type="m">Heer</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">En maeckt dat <rhyme label="c" type="m" corresp="#s3:l5">wy</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Dat doen tot uwer <rhyme label="d" type="m" corresp="#s3:l6">eer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Ten vierden <rhyme label="a" type="m">doet</rhyme></l>
        <l id="s4:l2" met="3" type="-+">De Sterckheydt in ons <rhyme label="b" type="f">dalen</rhyme>;</l>
        <l id="s4:l3" met="2" type="-+">Dat quaet, noch, <rhyme label="a" type="m" corresp="#s4:l1">goet</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Noch wellust, ons doet <rhyme label="b" type="f" corresp="#s4:l2">dwalen</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Maer maeckt ons <rhyme label="c" type="m">al</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Vroom teghen s'vyants <rhyme label="d" type="m">strijdt</rhyme>:</l>
        <l id="s4:l7" met="2" type="-+">En voor den <rhyme label="c" type="m" corresp="#s4:l5">val</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Ons door uw' handt <rhyme label="d" type="m" corresp="#s4:l6">bevrijdt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Wilt ons, o <rhyme label="a" type="m">Godt</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">De Wetenschap oock <rhyme label="b" type="f">schencken</rhyme>,</l>
        <l id="s5:l3" met="2" type="-+">Om u <rhyme label="a" type="m" corresp="#s5:l1">ghebodt</rhyme>.</l>
        <l id="s5:l4" met="3" type="-+">Te moghen <rhyme label="b" type="f" corresp="#s5:l2">overdencken</rhyme>;</l>
        <l id="s5:l5" met="2" type="-+">V licht <rhyme label="c" type="m">ontsteeckt</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Dat wy sien onsen <rhyme label="d" type="m">grondt</rhyme>,</l>
        <l id="s5:l7" met="2" type="-+">Wat daer <rhyme label="c" type="m" corresp="#s5:l5">ghebreeckt</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">En hoemen schoudt de <rhyme label="d" type="m" corresp="#s5:l6">sonde</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">
          <rhyme label="a" type="m">Godtvruchtigheydt</rhyme>
        </l>
        <l id="s6:l2" met="3" type="-+">Verleent ons hier <rhyme label="b" type="f">beneven</rhyme>.</l>
        <l id="s6:l3" met="2" type="-+">Want sy ons <rhyme label="a" type="m" corresp="#s6:l1">leydt</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Tot u, o Heer, <rhyme label="b" type="f" corresp="#s6:l2">verheven</rhyme></l>
        <l id="s6:l5" met="2" type="-+">Ons naesten <rhyme label="c" type="m">wert</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Hier door seer wel <rhyme label="d" type="m">gherieft</rhyme>,</l>
        <l id="s6:l7" met="2" type="-+">Wt een goet <rhyme label="c" type="m" corresp="#s6:l5">hert</rhyme>;</l>
        <l id="s6:l8" met="3" type="-+">Om dat het u <rhyme label="d" type="m" corresp="#s6:l6">belieft</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="2" type="-+">Ten laetsten <rhyme label="a" type="m">plant</rhyme></l>
        <l id="s7:l2" met="3" type="-+">In ons de Vrees des <rhyme label="b" type="f">Heeren</rhyme></l>
        <l id="s7:l3" met="2" type="-+">Dat wy <rhyme label="a" type="m" corresp="#s7:l1">niemant</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Meer vreesen maer ons <rhyme label="b" type="f" corresp="#s7:l2">keeren</rhyme></l>
        <l id="s7:l5" met="2" type="-+">Als kinders <rhyme label="c" type="m">fijn</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Tot onsen Vaders <rhyme label="d" type="m">schoot</rhyme>,</l>
        <l id="s7:l7" met="2" type="-+">Om hem te <rhyme label="c" type="m" corresp="#s7:l5">sijn</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Ghehoorsaem totter <rhyme label="d" type="m" corresp="#s7:l6">doot</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

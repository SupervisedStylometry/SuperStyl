    <tags/>
    <melody>Bruine verf wordt geprezen</melody>
  <author>Dirk Rafaelsz. Camphuysen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">WElaen, o alle <rhyme label="a" type="f">vromen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Die Godt hier scherp <rhyme label="b" type="m">kastijdt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">En in veel drucks laet <rhyme label="a" type="f" corresp="#s1:l1">komen</rhyme>:</l>
        <l id="s1:l4" met="3" type="-+">Weest in uw druck <rhyme label="b" type="m" corresp="#s1:l2">verblijdt</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">In zware <rhyme label="c" type="f">tegenheden</rhyme></l>
        <l id="s1:l6" met="2" type="+-">Heeft de <rhyme label="d" type="m">Deuchdt</rhyme></l>
        <l id="s1:l7" met="3" type="-+">De meeste stof en <rhyme label="c" type="f" corresp="#s1:l5">reden</rhyme></l>
        <l id="s1:l8" met="2" type="+-">Van veel <rhyme label="d" type="m" corresp="#s1:l6">vreuchdt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">'t Is niet uyt haet of <rhyme label="a" type="f">tooren</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Als u Godts handt koomt <rhyme label="b" type="m">slaen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Maer dat ghy niet <rhyme label="a" type="f" corresp="#s2:l1">verloren</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Zoudt met Werelt <rhyme label="b" type="m" corresp="#s2:l2">gaen</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">'t Geen Boozen dijdt tot <rhyme label="c" type="f">plage</rhyme>,</l>
        <l id="s2:l6" met="2" type="+-">'t Zelve <rhyme label="d" type="m">ding</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Is u, kont ghy 't wel <rhyme label="c" type="f" corresp="#s2:l5">dragen</rhyme>,</l>
        <l id="s2:l8" met="2" type="+-"><rhyme label="d" type="m" corresp="#s2:l6">Zegening</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Godts tucht-roe' doet u <rhyme label="a" type="f">weten</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Dat hy u noch <rhyme label="b" type="m">bemint</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">En niet en heeft <rhyme label="a" type="f" corresp="#s3:l1">vergeten</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Maer noch houdt voor zijn <rhyme label="b" type="m" corresp="#s3:l2">kindt</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Geen vader na den <rhyme label="c" type="f">vleysche</rhyme>,</l>
        <l id="s3:l6" met="2" type="+-">(Draeght hy <rhyme label="d" type="m">zucht</rhyme>)</l>
        <l id="s3:l7" met="3" type="-+">Die, als 't de noodt zal <rhyme label="c" type="f" corresp="#s3:l5">eyschen</rhyme>,</l>
        <l id="s3:l8" met="2" type="+-">'t Kindt niet <rhyme label="d" type="m" corresp="#s3:l6">tucht't</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Een vleyschelijcke <rhyme label="a" type="f">vader</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Kastijdt na <rhyme label="b" type="m">fantasy</rhyme>;</l>
        <l id="s4:l3" met="3" type="-+">Op dat hy 't kindt van <rhyme label="a" type="f" corresp="#s4:l1">quader</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Door vroege tucht, <rhyme label="b" type="m" corresp="#s4:l2">bevry</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">Maer Godt, die in geen <rhyme label="c" type="f">zaken</rhyme></l>
        <l id="s4:l6" met="2" type="+-">Ooyt gaet <rhyme label="d" type="m">mis</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Wil ons door tucht zoo <rhyme label="c" type="f" corresp="#s4:l5">maken</rhyme></l>
        <l id="s4:l8" met="2" type="+-">Als Hy <rhyme label="d" type="m" corresp="#s4:l6">is</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Aenvechting baert <rhyme label="a" type="f">op-mercken</rhyme>;</l>
        <l id="s5:l2" met="3" type="-+">Op-mercken maeckt <rhyme label="b" type="m">bequaem</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Tot Deuchdt en heyl'ge <rhyme label="a" type="f" corresp="#s5:l1">wercken</rhyme>;</l>
        <l id="s5:l4" met="3" type="-+">Deuchdt, by Godt <rhyme label="b" type="m" corresp="#s5:l2">aengenaem</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Onmackelijck, doch <rhyme label="c" type="f">veyligh</rhyme></l>
        <l id="s5:l6" met="2" type="+-">Gaen, leert <rhyme label="d" type="m">hy</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Die wil dat yeder <rhyme label="c" type="f" corresp="#s5:l5">heyligh</rhyme>,</l>
        <l id="s5:l8" met="2" type="+-">Als Hy, <rhyme label="d" type="m" corresp="#s5:l6">zy</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Veel Zoets na weynigh <rhyme label="a" type="f">Galle</rhyme>.</l>
        <l id="s6:l2" met="3" type="-+">Wat noodt als 't zoo <rhyme label="b" type="m">behoeft</rhyme>?</l>
        <l id="s6:l3" met="3" type="-+">Godts kind'ren hebben <rhyme label="a" type="f" corresp="#s6:l1">alle</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Van dezen kelck <rhyme label="b" type="m" corresp="#s6:l2">geproeft</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Liet Godt ons zonder <rhyme label="c" type="f">lijden</rhyme></l>
        <l id="s6:l6" met="2" type="+-">StaÃªgh in <rhyme label="d" type="m">g'luck</rhyme>:</l>
        <l id="s6:l7" met="3" type="-+">Geen stoff waer 't van <rhyme label="c" type="f" corresp="#s6:l5">verblijden</rhyme>,</l>
        <l id="s6:l8" met="2" type="+-">Maer van <rhyme label="d" type="m" corresp="#s6:l6">druck</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Ontbeertmen hier het <rhyme label="a" type="f">gene</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Dat nooyt kindt Godts <rhyme label="b" type="m">ontbeert</rhyme>:</l>
        <l id="s7:l3" met="3" type="-+">Licht mistmen, na, met <rhyme label="a" type="f" corresp="#s7:l1">eenen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Zijn hooghste <rhyme label="b" type="m" corresp="#s7:l2">ziel-begeert</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">Zoo scherpe tucht off <rhyme label="c" type="f">hinder</rhyme></l>
        <l id="s7:l6" met="2" type="+-">Nooyt <rhyme label="d" type="m">voor-viel</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">'t Waer klaer dat Godt voor <rhyme label="c" type="f" corresp="#s7:l5">Kinder</rhyme></l>
        <l id="s7:l8" met="2" type="+-">Ons niet <rhyme label="d" type="m" corresp="#s7:l6">hiel'</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">'s Vleyschs voorspoedt is een <rhyme label="a" type="f">zegen</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Maer zulck niet als ghy <rhyme label="b" type="m">wacht</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">En meest van die <rhyme label="a" type="f" corresp="#s8:l1">verkregen</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Die Godt voor Bastert <rhyme label="b" type="m" corresp="#s8:l2">acht</rhyme>.</l>
        <l id="s8:l5" met="3" type="-+">Wie op <rhyme label="c" type="f">verganck'lijckheden</rhyme></l>
        <l id="s8:l6" met="2" type="+-">'t Hert noch <rhyme label="d" type="m">vest't</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Schijnt niet genoegh te <rhyme label="c" type="f" corresp="#s8:l5">vreden</rhyme></l>
        <l id="s8:l8" met="2" type="+-">Met het <rhyme label="d" type="m" corresp="#s8:l6">Best</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Flauw dan in geen <rhyme label="a" type="f">kastijding</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Bescheld off laeckze <rhyme label="b" type="m">niet</rhyme>.</l>
        <l id="s9:l3" met="3" type="-+">Maeck oock geen keur in <rhyme label="a" type="f" corresp="#s9:l1">lijding</rhyme>;</l>
        <l id="s9:l4" met="3" type="-+">Neem zoo als 't Godt u <rhyme label="b" type="m" corresp="#s9:l2">biedt</rhyme>.</l>
        <l id="s9:l5" met="3" type="-+">Hem maet te willen <rhyme label="c" type="f">stellen</rhyme>,</l>
        <l id="s9:l6" met="2" type="+-">Acht Godt <rhyme label="d" type="m">quaedt</rhyme>.</l>
        <l id="s9:l7" met="3" type="-+">En waer toe 't zondigh <rhyme label="c" type="f" corresp="#s9:l5">quellen</rhyme></l>
        <l id="s9:l8" met="2" type="+-">Dat niet <rhyme label="d" type="m" corresp="#s9:l6">baet</rhyme>?</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">In reyn Gelooff op <rhyme label="a" type="f">aerden</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Als vreemd'ling heen te <rhyme label="b" type="m">gaen</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Is hoogh by Godt in <rhyme label="a" type="f" corresp="#s10:l1">waerden</rhyme></l>
        <l id="s10:l4" met="3" type="-+">En een groot werck <rhyme label="b" type="m" corresp="#s10:l2">gedaen</rhyme>:</l>
        <l id="s10:l5" met="3" type="-+">Dies is 't somwijl van <rhyme label="c" type="f">nooden</rhyme></l>
        <l id="s10:l6" met="2" type="+-">Dat Godt <rhyme label="d" type="m">dael</rhyme></l>
        <l id="s10:l7" met="3" type="-+">En 't hert al zijn <rhyme label="c" type="f" corresp="#s10:l5">By-Goden</rhyme></l>
        <l id="s10:l8" met="2" type="+-">Gants <rhyme label="d" type="m" corresp="#s10:l6">ont-hael</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Daer zal zoo licht yet <rhyme label="a" type="f">schuylen</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Daer zich noch 't Vleysch me'e <rhyme label="b" type="m">stut</rhyme></l>
        <l id="s11:l3" met="3" type="-+">En 't hert door kan <rhyme label="a" type="f" corresp="#s11:l1">vervuylen</rhyme>:</l>
        <l id="s11:l4" met="3" type="-+">Dies is de zuyv'ring <rhyme label="b" type="m" corresp="#s11:l2">nut</rhyme>.</l>
        <l id="s11:l5" met="3" type="-+">Licht deed'men 't onkruydt <rhyme label="c" type="f">sterven</rhyme></l>
        <l id="s11:l6" met="2" type="+-">Zoomen 't <rhyme label="d" type="m">zach</rhyme>;</l>
        <l id="s11:l7" met="3" type="-+">En Lieffd' koomt door Liefs <rhyme label="c" type="f" corresp="#s11:l5">derven</rhyme></l>
        <l id="s11:l8" met="2" type="+-">Aen den <rhyme label="d" type="m" corresp="#s11:l6">dagh</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">All' Aerdtsche troost moet <rhyme label="a" type="f">henen</rhyme>;</l>
        <l id="s12:l2" met="3" type="-+">(Qua' toeverlaet baert <rhyme label="b" type="m">smert</rhyme>.)</l>
        <l id="s12:l3" met="3" type="-+">Godt wil en moet <rhyme label="a" type="f" corresp="#s12:l1">alleene</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Een Godt zijn in uw <rhyme label="b" type="m" corresp="#s12:l2">hert</rhyme>.</l>
        <l id="s12:l5" met="3" type="-+">Des menschen troost op 't <rhyme label="c" type="f">Zichtlijck</rhyme>,</l>
        <l id="s12:l6" met="2" type="+-">('t Zy hoe <rhyme label="d" type="m">kleen</rhyme>)</l>
        <l id="s12:l7" met="3" type="-+">Weert hyze niet, kan <rhyme label="c" type="f" corresp="#s12:l5">licht'lijck</rhyme></l>
        <l id="s12:l8" met="2" type="+-">Van Godt <rhyme label="d" type="m" corresp="#s12:l6">sche^en</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Wil Godt u niets hier <rhyme label="a" type="f">laten</rhyme>:</l>
        <l id="s13:l2" met="3" type="-+">Weest willigh en <rhyme label="b" type="m">bereydt</rhyme>:</l>
        <l id="s13:l3" met="3" type="-+">De Droeff'nis heeft een <rhyme label="a" type="f" corresp="#s13:l1">mate</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Maer niet de <rhyme label="b" type="m" corresp="#s13:l2">Lijdtzaemheydt</rhyme>.</l>
        <l id="s13:l5" met="3" type="-+">Volmaeckt moet haer werck <rhyme label="c" type="f">wezen</rhyme></l>
        <l id="s13:l6" met="2" type="+-">Gants <rhyme label="d" type="m">end'al</rhyme>,</l>
        <l id="s13:l7" met="3" type="-+">Zoo zy van Godt <rhyme label="c" type="f" corresp="#s13:l5">vol-prezen</rhyme></l>
        <l id="s13:l8" met="2" type="+-">Worden <rhyme label="d" type="m" corresp="#s13:l6">zal</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Kort is de pijn en 't <rhyme label="a" type="f">zuchten</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">(Want 't leven zelfs is <rhyme label="b" type="m">kort</rhyme>)</l>
        <l id="s14:l3" met="3" type="-+">Maer lang en zoet de <rhyme label="a" type="f" corresp="#s14:l1">vruchte</rhyme></l>
        <l id="s14:l4" met="3" type="-+">Die ons daer door <rhyme label="b" type="m" corresp="#s14:l2">gewordt</rhyme>.</l>
        <l id="s14:l5" met="3" type="-+">Betruert dan hier geen <rhyme label="c" type="f">Truren</rhyme>.</l>
        <l id="s14:l6" met="2" type="+-">Zal 't wel <rhyme label="d" type="m">zijn</rhyme>:</l>
        <l id="s14:l7" met="3" type="-+">'t Geduldt moet zoo lang <rhyme label="c" type="f" corresp="#s14:l5">duren</rhyme></l>
        <l id="s14:l8" met="2" type="+-">Als de <rhyme label="d" type="m" corresp="#s14:l6">pijn</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

    <melody>O zalig heilig Bethlehem</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Albertus Buitendyck</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">VEnessers volght Ludgerus <rhyme label="a" type="m">na</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Van uwe Ieught doet sijne <rhyme label="b" type="f">deughden</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Daerom arbeyt soo vroegh als <rhyme label="a" type="m" corresp="#s1:l1">spa</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Tot hem sult komen in de <rhyme label="b" type="f" corresp="#s1:l2">vreughden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Houdt hem in waerden, en sijn <rhyme label="a" type="m">Feest</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Wilt geensins dan doch oyt <rhyme label="b" type="f">arbeyden</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Biecht, en spijst met 't Lam Godts u <rhyme label="a" type="m" corresp="#s2:l1">geest</rhyme>.</l>
        <l id="s2:l4" met="4" type="-+">Van 't Roomsch gheloof laet u noyt <rhyme label="b" type="f" corresp="#s2:l2">leyden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ludgerus heylige <rhyme label="a" type="m">patroon</rhyme>!</l>
        <l id="s3:l2" met="4" type="-+">Door u gebedt wilt ons <rhyme label="b" type="f">verwerven</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Van Iesus Christus Godes <rhyme label="a" type="m" corresp="#s3:l1">Soon</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Goedt leven, ende saligh <rhyme label="b" type="f" corresp="#s3:l2">sterven</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Geeft Iesu door u liefde <rhyme label="a" type="m">groot</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">In onse doodt u Hemels <rhyme label="b" type="f">vreughden</rhyme>;</l>
        <l id="s4:l3" met="4" type="-+">Daer niet gebreeckt, noch is geen <rhyme label="a" type="m" corresp="#s4:l1">noot</rhyme>.</l>
        <l id="s4:l4" met="4" type="-+">Ey! wilt ons al hier door <rhyme label="b" type="f" corresp="#s4:l2">verheugen</rhyme>.</l>
      </lg>
    </lg>
  </text>

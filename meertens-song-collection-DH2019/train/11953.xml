    </categories>
  <author>Cornelis de Leeuw</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">ALle menschen sterck <rhyme label="a" type="f">begeeren</rhyme></l>
        <l id="s1:l2" met="2" type="+-">Aertsche <rhyme label="b" type="m">vreucht</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Groote schat en hoghe <rhyme label="a" type="f" corresp="#s1:l1">eeren</rhyme>:</l>
        <l id="s1:l4" met="2" type="+-">Maer de <rhyme label="b" type="m" corresp="#s1:l2">deucht</rhyme></l>
        <l id="s1:l5" met="2" type="+-">Elck schier <rhyme label="c" type="m">haet</rhyme>,</l>
        <l id="s1:l6" met="2" type="+-">Als die <rhyme label="c" type="m" corresp="#s1:l5">quaet</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Sou gheven ziel en <rhyme label="d" type="m">hert</rhyme>,</l>
        <l id="s1:l8" met="2" type="-+">En aen doen <rhyme label="d" type="m" corresp="#s1:l7">smert</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Doch verbystert sijn haer <rhyme label="a" type="f">sinnen</rhyme></l>
        <l id="s2:l2" met="2" type="+-">Die dit <rhyme label="b" type="m">goedt</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Boven Godt en deucht <rhyme label="a" type="f" corresp="#s2:l1">beminnen</rhyme></l>
        <l id="s2:l4" met="2" type="+-">Want het <rhyme label="b" type="m" corresp="#s2:l2">doet</rhyme></l>
        <l id="s2:l5" met="2" type="+-">Sielen <rhyme label="c" type="m">schae</rhyme>,</l>
        <l id="s2:l6" met="2" type="+-">Om Godt <rhyme label="c" type="m" corresp="#s2:l5">nae</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Te tre'en in <rhyme label="d" type="m">heyligheyt</rhyme>,</l>
        <l id="s2:l8" met="2" type="-+">Ter <rhyme label="d" type="m" corresp="#s2:l7">saligheyt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">In de Weerelt hoogh <rhyme label="a" type="f">verheven</rhyme></l>
        <l id="s3:l2" met="2" type="+-">Sijn in <rhyme label="b" type="m">eer</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Kan gheen ware hoogheyt <rhyme label="a" type="f" corresp="#s3:l1">gheven</rhyme></l>
        <l id="s3:l4" met="2" type="+-">By den <rhyme label="b" type="m" corresp="#s3:l2">Heer</rhyme>:</l>
        <l id="s3:l5" met="2" type="+-">Soo u <rhyme label="c" type="m">hert</rhyme></l>
        <l id="s3:l6" met="2" type="+-">Is <rhyme label="c" type="m" corresp="#s3:l5">ververt</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Van Godt: want hy <rhyme label="d" type="m">verne'ert</rhyme></l>
        <l id="s3:l8" met="2" type="-+">Die van 't goet <rhyme label="d" type="m" corresp="#s3:l7">keert</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Wat baet eer ons nae het <rhyme label="a" type="f">sterven</rhyme>?</l>
        <l id="s4:l2" met="2" type="+-">Jae wat <rhyme label="b" type="m">baet</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Gheefts' ons hier, soo wy <rhyme label="a" type="f" corresp="#s4:l1">verwerven</rhyme></l>
        <l id="s4:l4" met="2" type="+-">Die door 't <rhyme label="b" type="m" corresp="#s4:l2">quaet</rhyme>?</l>
        <l id="s4:l5" met="2" type="+-">Voeght hem <rhyme label="c" type="m">prijs</rhyme></l>
        <l id="s4:l6" met="2" type="+-">Die <rhyme label="c" type="m" corresp="#s4:l5">bewijs</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Van sonden gheeft? o! <rhyme label="d" type="m">neen</rhyme>.</l>
        <l id="s4:l8" met="2" type="-+">Deught volghts' <rhyme label="d" type="m" corresp="#s4:l7">alleen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Aertsche vreughden is gheen <rhyme label="a" type="f">vreughde</rhyme>,</l>
        <l id="s5:l2" met="2" type="+-">Maer recht <rhyme label="b" type="m">pijn</rhyme>;</l>
        <l id="s5:l3" met="4" type="+-">Spruytse niet uyt Godt en <rhyme label="a" type="f" corresp="#s5:l1">deughde</rhyme>.</l>
        <l id="s5:l4" met="2" type="+-">Wilt ghy <rhyme label="b" type="m" corresp="#s5:l2">sijn</rhyme></l>
        <l id="s5:l5" met="2" type="+-">Recht <rhyme label="c" type="m">verblijdt</rhyme>,</l>
        <l id="s5:l6" met="2" type="+-">Heyligh <rhyme label="c" type="m" corresp="#s5:l5">zijt</rhyme>.</l>
        <l id="s5:l7" met="3" type="-+">Goe stomme herten <rhyme label="d" type="m">sprack</rhyme></l>
        <l id="s5:l8" met="2" type="-+">Gheeft recht <rhyme label="d" type="m" corresp="#s5:l7">vermaeck</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Recht vermaeck, 't welck blijft <rhyme label="a" type="f">bestendigh</rhyme></l>
        <l id="s6:l2" met="2" type="+-">Selfs <rhyme label="b" type="m">wanneer</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Wy door sieckten sijn <rhyme label="a" type="f" corresp="#s6:l1">ellendigh</rhyme>;</l>
        <l id="s6:l4" met="2" type="+-">Want de <rhyme label="b" type="m" corresp="#s6:l2">Heer</rhyme></l>
        <l id="s6:l5" met="2" type="+-">Die hem <rhyme label="c" type="m">vreest</rhyme></l>
        <l id="s6:l6" met="2" type="+-">Door sijn <rhyme label="c" type="m" corresp="#s6:l5">Gheest</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Vertroost in sijn <rhyme label="d" type="m">ellent</rhyme>,</l>
        <l id="s6:l8" met="2" type="-+">Dat hy <rhyme label="d" type="m" corresp="#s6:l7">toesendt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Rijckdom voordeel gheeft de <rhyme label="a" type="f">menschen</rhyme></l>
        <l id="s7:l2" met="2" type="+-">Som in <rhyme label="b" type="m">t'recht</rhyme>;</l>
        <l id="s7:l3" met="4" type="+-">'t Maeckt dat ons verschil nae <rhyme label="a" type="f" corresp="#s7:l1">wenschen</rhyme></l>
        <l id="s7:l4" met="2" type="+-">Wert <rhyme label="b" type="m" corresp="#s7:l2">ghesleght</rhyme>.</l>
        <l id="s7:l5" met="2" type="+-">'t Ghelt schoon <rhyme label="c" type="m">stom</rhyme></l>
        <l id="s7:l6" met="2" type="+-">Buyght het <rhyme label="c" type="m" corresp="#s7:l5">krom</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Tot recht; doch Godt <rhyme label="d" type="m">ghelijck</rhyme></l>
        <l id="s7:l8" met="2" type="-+">Doet arm en <rhyme label="d" type="m" corresp="#s7:l7">rijck</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">'s Werelts rijckdom in Gods <rhyme label="a" type="f">Oordeel</rhyme></l>
        <l id="s8:l2" met="2" type="+-">Niet en <rhyme label="b" type="m">baet</rhyme>:</l>
        <l id="s8:l3" met="4" type="+-">Gheeft oock niet tot Gods-vreucht <rhyme label="a" type="f" corresp="#s8:l1">voordeel</rhyme></l>
        <l id="s8:l4" met="2" type="+-">Want Godt <rhyme label="b" type="m" corresp="#s8:l2">slaet</rhyme></l>
        <l id="s8:l5" met="2" type="+-">Acht op 't <rhyme label="c" type="m">goet</rhyme></l>
        <l id="s8:l6" met="2" type="+-">Dat ghy <rhyme label="c" type="m" corresp="#s8:l5">doet</rhyme>:</l>
        <l id="s8:l7" met="3" type="-+">En of ghy zijt <rhyme label="d" type="m">gheweest</rhyme></l>
        <l id="s8:l8" met="2" type="-+">Recht arm van <rhyme label="d" type="m" corresp="#s8:l7">gheest</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Deught gheeft vreught, en goet, en <rhyme label="a" type="f">eeren</rhyme>.</l>
        <l id="s9:l2" met="2" type="+-">Godt <rhyme label="b" type="m">verblijdt</rhyme></l>
        <l id="s9:l3" met="4" type="+-">Die hem dient met diep <rhyme label="a" type="f" corresp="#s9:l1">verne'eren</rhyme>.</l>
        <l id="s9:l4" met="2" type="+-">t'Aller <rhyme label="b" type="m" corresp="#s9:l2">tijdt</rhyme></l>
        <l id="s9:l5" met="2" type="+-">Godt hem <rhyme label="c" type="m">voedt</rhyme></l>
        <l id="s9:l6" met="2" type="+-">Die deucht <rhyme label="c" type="m" corresp="#s9:l5">doet</rhyme>;</l>
        <l id="s9:l7" met="3" type="-+">En gheeft hem tot een <rhyme label="d" type="m">loon</rhyme></l>
        <l id="s9:l8" met="2" type="-+">Des levens <rhyme label="d" type="m" corresp="#s9:l7">kroon</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Sijt ghy wijs, mint niet 't <rhyme label="a" type="f">verderff'lijck</rhyme></l>
        <l id="s10:l2" met="2" type="+-">Goet; 't is <rhyme label="b" type="m">schijn</rhyme></l>
        <l id="s10:l3" met="4" type="+-">Soeckt waer door ghy mooght <rhyme label="a" type="f" corresp="#s10:l1">ontsterf'lijck</rhyme></l>
        <l id="s10:l4" met="2" type="+-">Als Godt <rhyme label="b" type="m" corresp="#s10:l2">sijn</rhyme>.</l>
        <l id="s10:l5" met="2" type="+-">Aertsch <rhyme label="c" type="m">ghewin</rhyme></l>
        <l id="s10:l6" met="2" type="+-">Draeght gheen <rhyme label="c" type="m" corresp="#s10:l5">min</rhyme></l>
        <l id="s10:l7" met="3" type="-+">In't hert, sy licht'lijck <rhyme label="d" type="m">smoort</rhyme></l>
        <l id="s10:l8" met="2" type="-+">G'looff en Gods <rhyme label="d" type="m" corresp="#s10:l7">woort</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

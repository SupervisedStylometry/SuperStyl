    <melody>O zalig heilig Bethlehem</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Jacob Rosant</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">KOmt laet ons na ons schuldigh <rhyme label="a" type="m">plight</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Den Heer met een Lof-sangh <rhyme label="b" type="f">vereeren</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Die welk Maria heeft <rhyme label="a" type="m" corresp="#s1:l1">gedight</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Toen sy haer Night gingh <rhyme label="b" type="f" corresp="#s1:l2">visiteeren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Den Engel had' haer doen <rhyme label="a" type="m">verstaen</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Dat hare Night haest soude <rhyme label="b" type="f">baren</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En een jongk Kintjen souw <rhyme label="a" type="m" corresp="#s2:l1">ontfaen</rhyme></l>
        <l id="s2:l4" met="4" type="-+">In haer onvruchtbarige <rhyme label="b" type="f" corresp="#s2:l2">jaren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Uyt enkel liefde wil sy <rhyme label="a" type="m">gaen</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Met 's harten blyschap te <rhyme label="b" type="f">aenschouwen</rhyme></l>
        <l id="s3:l3" met="4" type="-+">'t Mirakel dat Godt hadt <rhyme label="a" type="m" corresp="#s3:l1">gedaen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">En haer Night geselschap te <rhyme label="b" type="f" corresp="#s3:l2">houwen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Elisabeth, mijn waerde <rhyme label="a" type="m">Night</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Godt met u blijve al uw <rhyme label="b" type="f">leeven</rhyme>.</l>
        <l id="s4:l3" met="4" type="-+">Elisabeth, van Godt <rhyme label="a" type="m" corresp="#s4:l1">verlight</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Roept seer luydt met stemme <rhyme label="b" type="f" corresp="#s4:l2">verheeven</rhyme>:</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Welkom sijt gy, o suyver <rhyme label="a" type="m">Maeght</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Gebenedijt boven de <rhyme label="b" type="f">vrouwen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">En ook de vruchte die gy <rhyme label="a" type="m" corresp="#s5:l1">draeght</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Christus Goods Soon al ons <rhyme label="b" type="f" corresp="#s5:l2">betrouwen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Van waer komt mijn dit groot <rhyme label="a" type="m">geluk</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Dat mijn besoekt de MoÃªr des <rhyme label="b" type="f">Heeren</rhyme>?</l>
        <l id="s6:l3" met="4" type="-+">En nogh gebeurt een wonder <rhyme label="a" type="m" corresp="#s6:l1">stuk</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Tot uw' Kindts en tot uwer <rhyme label="b" type="f" corresp="#s6:l2">eeren</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Mijn Kindt springht op in mijn <rhyme label="a" type="m">lighaem</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Soo ras als ik uw groete <rhyme label="b" type="f">hoorden</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">'t Geen is geseyt sal sijn <rhyme label="a" type="m" corresp="#s7:l1">bequaem</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Om dat gy gelooft hebt Goodts <rhyme label="b" type="f" corresp="#s7:l2">woorden</rhyme>.</l>
      </lg>
    </lg>
  </text>

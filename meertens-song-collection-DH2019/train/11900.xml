    <tags>
      <tag standard-name="bespiegelend lied" translation="reflective song">bespiegelend lied</tag>
    </tags>
    <melody>La Vignonne</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Cornelis de Leeuw</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">WIlt ghy de <rhyme label="a" type="m">zalicheyt</rhyme>,</l>
        <l id="s1:l2" met="5" type="-+">Van on-sen Godt den vroomen <rhyme label="a" type="m" corresp="#s1:l1">toegheseydt</rhyme>;</l>
        <l id="s1:l3" met="2" type="+-">Neerstigh <rhyme label="b" type="m">zijt</rhyme>.</l>
        <l id="s1:l4" met="2" type="+-">Ernstigh <rhyme label="b" type="m" corresp="#s1:l3">wijckt</rhyme>.</l>
        <l id="s1:l5" met="2" type="+-">Wilt <rhyme label="b" type="m" corresp="#s1:l3">altijdt</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Hoop en deuchden wel <rhyme label="c" type="f">bewaren</rhyme>;</l>
        <l id="s1:l7" met="2" type="+-">Helsche <rhyme label="c" type="f" corresp="#s1:l6">scharen</rhyme></l>
        <l id="s1:l8" met="2" type="+-">Schoon u <rhyme label="d" type="m">hert</rhyme>,</l>
        <l id="s1:l9" met="2" type="+-">Met veel <rhyme label="d" type="m" corresp="#s1:l8">smert</rhyme></l>
        <l id="s1:l10" met="2" type="+-">Staegh <rhyme label="c" type="f" corresp="#s1:l6">beswaren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Godt geen behagen <rhyme label="a" type="m">heeft</rhyme></l>
        <l id="s2:l2" met="5" type="-+">In hem, die sich van deught tot sonden <rhyme label="a" type="m" corresp="#s2:l1">gheeft</rhyme>.</l>
        <l id="s2:l3" met="2" type="+-">Die het <rhyme label="b" type="m">quaet</rhyme></l>
        <l id="s2:l4" met="2" type="+-">Eerst <rhyme label="b" type="m" corresp="#s2:l3">gehaet</rhyme>,</l>
        <l id="s2:l5" met="2" type="+-">'t Hert in <rhyme label="b" type="m" corresp="#s2:l3">laet</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">En op nieus weer gaet <rhyme label="c" type="f">betrachten</rhyme></l>
        <l id="s2:l7" met="2" type="+-">Heeft te <rhyme label="c" type="f" corresp="#s2:l6">wachten</rhyme></l>
        <l id="s2:l8" met="2" type="+-">Van Gods <rhyme label="d" type="m">Soon</rhyme></l>
        <l id="s2:l9" met="2" type="+-">Straf tot <rhyme label="d" type="m" corresp="#s2:l8">loon</rhyme>,</l>
        <l id="s2:l10" met="2" type="+-">Dagh en <rhyme label="c" type="f" corresp="#s2:l6">nachten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ghy sult u <rhyme label="a" type="m">heyligheyt</rhyme></l>
        <l id="s3:l2" met="5" type="-+">Verlaten noyt, soo in u sinnen <rhyme label="a" type="m" corresp="#s3:l1">leyt</rhyme></l>
        <l id="s3:l3" met="2" type="+-">Vast <rhyme label="b" type="m">gegront</rhyme></l>
        <l id="s3:l4" met="2" type="+-">'t Aller <rhyme label="b" type="m" corresp="#s3:l3">stont</rhyme></l>
        <l id="s3:l5" met="2" type="+-">Gods <rhyme label="b" type="m" corresp="#s3:l3">verbont</rhyme>;</l>
        <l id="s3:l6" met="4" type="+-">'t Welck belooft ons 't eeuwigh <rhyme label="c" type="f">leven</rhyme>,</l>
        <l id="s3:l7" met="2" type="+-">Soo wy <rhyme label="c" type="f" corresp="#s3:l6">geven</rhyme></l>
        <l id="s3:l8" met="2" type="+-">Ons <rhyme label="d" type="m">gemoet</rhyme></l>
        <l id="s3:l9" met="2" type="+-">Tot het <rhyme label="d" type="m" corresp="#s3:l8">goet</rhyme>;</l>
        <l id="s3:l10" met="2" type="+-">En niet <rhyme label="c" type="f" corresp="#s3:l6">sneven</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Laeckt nimmermeer de <rhyme label="a" type="m">deucht</rhyme>,</l>
        <l id="s4:l2" met="5" type="-+">Die eertijts was u schat en hoogste <rhyme label="a" type="m" corresp="#s4:l1">vreugt</rhyme>.</l>
        <l id="s4:l3" met="2" type="+-">Prijst geen <rhyme label="b" type="m">sond</rhyme></l>
        <l id="s4:l4" met="2" type="+-">Met den <rhyme label="b" type="m" corresp="#s4:l3">mont</rhyme>;</l>
        <l id="s4:l5" met="2" type="+-">s' Is een <rhyme label="b" type="m" corresp="#s4:l3">vont</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Voortgekomen uyt der <rhyme label="c" type="f">Hellen</rhyme>,</l>
        <l id="s4:l7" met="2" type="+-">U te <rhyme label="c" type="f" corresp="#s4:l6">quellen</rhyme>.</l>
        <l id="s4:l8" met="2" type="+-">Mijt en <rhyme label="d" type="m">strijt</rhyme></l>
        <l id="s4:l9" met="2" type="+-">Wilt in <rhyme label="d" type="m" corresp="#s4:l8">tijt</rhyme></l>
        <l id="s4:l10" met="2" type="+-">Haer <rhyme label="c" type="f" corresp="#s4:l6">neer-vellen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Laet noyt geen sonden <rhyme label="a" type="m">in</rhyme>;</l>
        <l id="s5:l2" met="5" type="-+">Of schoon die kleyn of fray is in u <rhyme label="a" type="m" corresp="#s5:l1">sin</rhyme>.</l>
        <l id="s5:l3" met="2" type="+-">Schoon in <rhyme label="b" type="m">schijn</rhyme></l>
        <l id="s5:l4" met="2" type="+-">V kan <rhyme label="b" type="m" corresp="#s5:l3">zijn</rhyme></l>
        <l id="s5:l5" met="2" type="+-"><rhyme label="b" type="m" corresp="#s5:l3">Doots-venijn</rhyme>.</l>
        <l id="s5:l6" met="4" type="+-">'t Kleyne van ons <rhyme label="c" type="f">voorgenomen</rhyme>,</l>
        <l id="s5:l7" met="2" type="+-">Doet licht <rhyme label="c" type="f" corresp="#s5:l6">komen</rhyme></l>
        <l id="s5:l8" met="2" type="+-">Tot jet, 't <rhyme label="d" type="m">geen</rhyme></l>
        <l id="s5:l9" met="2" type="+-">Ghy <rhyme label="d" type="m" corresp="#s5:l8">voorheen</rhyme></l>
        <l id="s5:l10" met="2" type="+-">Niet dorst <rhyme label="c" type="f" corresp="#s5:l6">droomen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Neemt meer en meerder <rhyme label="a" type="m">toe</rhyme></l>
        <l id="s6:l2" met="5" type="-+">In heyligheyt; wert daer in nimmer <rhyme label="a" type="m" corresp="#s6:l1">moe</rhyme>.</l>
        <l id="s6:l3" met="2" type="+-">Op Godts <rhyme label="b" type="m">paen</rhyme></l>
        <l id="s6:l4" met="2" type="+-">Is stil <rhyme label="b" type="m" corresp="#s6:l3">staen</rhyme></l>
        <l id="s6:l5" met="2" type="+-">Rugh-waerts <rhyme label="b" type="m" corresp="#s6:l3">gaen</rhyme>.</l>
        <l id="s6:l6" met="4" type="+-">Boven sal hy nimmer <rhyme label="c" type="f">komen</rhyme></l>
        <l id="s6:l7" met="2" type="+-">Op de <rhyme label="c" type="f" corresp="#s6:l6">stroomen</rhyme>,</l>
        <l id="s6:l8" met="2" type="+-">Soo niet <rhyme label="d" type="m">hy</rhyme></l>
        <l id="s6:l9" met="2" type="+-">Met 't <rhyme label="d" type="m" corresp="#s6:l8">getij</rhyme></l>
        <l id="s6:l10" met="2" type="+-">Wil <rhyme label="c" type="f" corresp="#s6:l6">aen-boomen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Tot alles port en <rhyme label="a" type="m">drijft</rhyme>,</l>
        <l id="s7:l2" met="5" type="-+">Dat hert en zin gestadigh besigh <rhyme label="a" type="m" corresp="#s7:l1">blijft</rhyme>,</l>
        <l id="s7:l3" met="2" type="+-">Om 't aertsch <rhyme label="b" type="m">goet</rhyme>,</l>
        <l id="s7:l4" met="2" type="+-">En <rhyme label="b" type="m" corresp="#s7:l3">hooghmoet</rhyme></l>
        <l id="s7:l5" met="2" type="+-">Met 't geen <rhyme label="b" type="m" corresp="#s7:l3">doet</rhyme></l>
        <l id="s7:l6" met="4" type="+-">In't verganck'lijck ons <rhyme label="c" type="f">vermaecken</rhyme></l>
        <l id="s7:l7" met="2" type="+-">Te <rhyme label="c" type="f" corresp="#s7:l6">versaecken</rhyme>;</l>
        <l id="s7:l8" met="2" type="+-">Om te <rhyme label="d" type="m">meer</rhyme></l>
        <l id="s7:l9" met="2" type="+-">'s Heeren <rhyme label="d" type="m" corresp="#s7:l8">leer</rhyme></l>
        <l id="s7:l10" met="2" type="+-">Te <rhyme label="c" type="f" corresp="#s7:l6">bewaecken</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">'t Beloofde heyl port <rhyme label="a" type="m">aen</rhyme></l>
        <l id="s8:l2" met="5" type="-+">Om yv'righ op des Heeren wegh te <rhyme label="a" type="m" corresp="#s8:l1">gaen</rhyme>.</l>
        <l id="s8:l3" met="2" type="+-">D' eeuw'ghe <rhyme label="b" type="m">straf</rhyme></l>
        <l id="s8:l4" met="2" type="+-">Sonder <rhyme label="b" type="m" corresp="#s8:l3">graf</rhyme>,</l>
        <l id="s8:l5" met="2" type="+-">Al die <rhyme label="b" type="m" corresp="#s8:l3">laf</rhyme></l>
        <l id="s8:l6" met="4" type="+-">Zijn gedreycht, den mensch leert <rhyme label="c" type="f">eeren</rhyme></l>
        <l id="s8:l7" met="2" type="+-">d'Heer der <rhyme label="c" type="f" corresp="#s8:l6">Heeren</rhyme>:</l>
        <l id="s8:l8" met="2" type="+-">Vrees en <rhyme label="d" type="m">hoop</rhyme></l>
        <l id="s8:l9" met="2" type="+-">In ons <rhyme label="d" type="m" corresp="#s8:l8">loop</rhyme></l>
        <l id="s8:l10" met="2" type="+-">Sonden <rhyme label="c" type="f" corresp="#s8:l6">weeren</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Hout u gedachten <rhyme label="a" type="m">vry</rhyme></l>
        <l id="s9:l2" met="5" type="-+">Van't quaet, u werck voor God onschuldigh <rhyme label="a" type="m" corresp="#s9:l1">zy</rhyme>.</l>
        <l id="s9:l3" met="2" type="+-">Brenght niet <rhyme label="b" type="m">voort</rhyme></l>
        <l id="s9:l4" met="2" type="+-">Eenigh <rhyme label="b" type="m" corresp="#s9:l3">woort</rhyme>,</l>
        <l id="s9:l5" met="2" type="+-">Dat <rhyme label="b" type="m" corresp="#s9:l3">verstoort</rhyme></l>
        <l id="s9:l6" met="4" type="+-">Vwen God. Wilt met u <rhyme label="c" type="f">sinnen</rhyme></l>
        <l id="s9:l7" met="2" type="+-">Niet <rhyme label="c" type="f" corresp="#s9:l6">beginnen</rhyme></l>
        <l id="s9:l8" met="2" type="+-"><rhyme label="d" type="m">Onbedacht</rhyme>.</l>
        <l id="s9:l9" met="2" type="+-">Stadich <rhyme label="d" type="m" corresp="#s9:l8">tracht</rhyme></l>
        <l id="s9:l10" met="2" type="+-">Deucht te <rhyme label="c" type="f" corresp="#s9:l6">winnen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Met vroomen staagh <rhyme label="a" type="m">verkeert</rhyme>,</l>
        <l id="s10:l2" met="5" type="-+">Op dat ghy oock met haer moogt zijn <rhyme label="a" type="m" corresp="#s10:l1">ge-eert</rhyme>:</l>
        <l id="s10:l3" met="2" type="+-">Met haer <rhyme label="b" type="m">zijt</rhyme></l>
        <l id="s10:l4" met="2" type="+-">'t Aller <rhyme label="b" type="m" corresp="#s10:l3">tijt</rhyme></l>
        <l id="s10:l5" met="2" type="+-">Inden <rhyme label="b" type="m" corresp="#s10:l3">strijt</rhyme></l>
        <l id="s10:l6" met="4" type="+-">Om de sonden af te <rhyme label="c" type="f">weeren</rhyme>.</l>
        <l id="s10:l7" met="2" type="+-">Niet <rhyme label="c" type="f" corresp="#s10:l6">verkeeren</rhyme></l>
        <l id="s10:l8" met="2" type="+-">Wilt met <rhyme label="d" type="m">haer</rhyme>,</l>
        <l id="s10:l9" met="2" type="+-">Hier noch <rhyme label="d" type="m" corresp="#s10:l8">daer</rhyme>,</l>
        <l id="s10:l10" met="2" type="+-">Die 't quaet <rhyme label="c" type="f" corresp="#s10:l6">leeren</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

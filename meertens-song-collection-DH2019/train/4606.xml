    <tags/>
    <melody>Een amoureus fier gelaat</melody>
  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">DEn Heer kent all’ de <rhyme label="a" type="f">zijnen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">En daerom ook en <rhyme label="b" type="m">zal</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Den Tempel niet <rhyme label="a" type="f" corresp="#s1:l1">verdwijnen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Of komen tot <rhyme label="b" type="m" corresp="#s1:l2">verval</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Maer Tempel wil ik <rhyme label="c" type="f">zeg-gen</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Die niet en werd <rhyme label="d" type="m">gezien</rhyme>.</l>
        <l id="s1:l7" met="3" type="-+">Dit is ’t gemeen uyt <rhyme label="c" type="f" corresp="#s1:l5">leggen</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Van d’alderfijnste <rhyme label="d" type="m" corresp="#s1:l6">lien</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Maer weetje om wat <rhyme label="a" type="f">rede</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Haer deze gloos <rhyme label="b" type="m">behaegt</rhyme>?</l>
        <l id="s2:l3" met="3" type="-+">’t Is rechts om hem daer <rhyme label="a" type="f" corresp="#s2:l1">mede</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Te helpen alsm’hen <rhyme label="b" type="m" corresp="#s2:l2">vraegt</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Naer haer geboude <rhyme label="c" type="f">Kerken</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Eer dat Calvinus <rhyme label="d" type="m">kwam</rhyme>.</l>
        <l id="s2:l7" met="3" type="-+">Op datmen niet <rhyme label="c" type="f" corresp="#s2:l5">bemerken</rhyme></l>
        <l id="s2:l8" met="3" type="-+">En zou haer nieuwe <rhyme label="d" type="m" corresp="#s2:l6">Stam</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Maer niet alzoo; <rhyme label="a" type="f">ellendig</rhyme>!</l>
        <l id="s3:l2" met="3" type="-+">Daer is maer eene <rhyme label="b" type="m">Kerk</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">En die altijd <rhyme label="a" type="f" corresp="#s3:l1">uitwendig</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">End’ altijd even <rhyme label="b" type="m" corresp="#s3:l2">sterk</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Op Satan, en de <rhyme label="c" type="f">deuren</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Der Hellen. Kundy <rhyme label="d" type="m">dan</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Vw’ Kerk voor zulks niet <rhyme label="c" type="f" corresp="#s3:l5">keuren</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Zoo’n hebjer ook niet <rhyme label="d" type="m" corresp="#s3:l6">van</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Midsdezen blijf ik <rhyme label="a" type="f">vragen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">(Dus speelt geen blinde <rhyme label="b" type="m">kaert</rhyme>)</l>
        <l id="s4:l3" met="3" type="-+">Waer datje voor de <rhyme label="a" type="f" corresp="#s4:l1">dagen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Van Ian Calvinus <rhyme label="b" type="m" corresp="#s4:l2">waert</rhyme>?</l>
        <l id="s4:l5" met="3" type="-+">Waert ghy doe zoo <rhyme label="c" type="f">versteken</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Dat niemand u en <rhyme label="d" type="m">zag</rhyme>:</l>
        <l id="s4:l7" met="3" type="-+">Zoo komt u ook <rhyme label="c" type="f" corresp="#s4:l5">t’ontbreken</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Al ’t Kerkelijk <rhyme label="d" type="m" corresp="#s4:l6">gezag</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">U baten hier noch <rhyme label="a" type="f">listen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Noch openbare <rhyme label="b" type="m">strijdt</rhyme>.</l>
        <l id="s5:l3" met="3" type="-+">Want hoe kan wezen <rhyme label="a" type="f" corresp="#s5:l1">Christen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Die Christum niet <rhyme label="b" type="m" corresp="#s5:l2">belijdt</rhyme>?</l>
        <l id="s5:l5" met="3" type="-+">Wierdt daer niet een <rhyme label="c" type="f">gevonden</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Dit uit een vrye <rhyme label="d" type="m">borst</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">En met een open <rhyme label="c" type="f" corresp="#s5:l5">monde</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Den Heer belijen <rhyme label="d" type="m" corresp="#s5:l6">dorst</rhyme>?</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Was dan de Kerk zoo <rhyme label="a" type="f">snode</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">En lichter als een <rhyme label="b" type="m">ried</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Dat zy haer vande <rhyme label="a" type="f" corresp="#s6:l1">Ioden</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Hier in beschaemen <rhyme label="b" type="m" corresp="#s6:l2">liet</rhyme>?</l>
        <l id="s6:l5" met="3" type="-+">Neen, neen. De <rhyme label="c" type="f">Martelaren</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Altijd al even <rhyme label="d" type="m">vroom</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Ons meer als wel <rhyme label="c" type="f" corresp="#s6:l5">verklaren</rhyme></l>
        <l id="s6:l8" met="3" type="-+">De dwaesheyd van uw’ <rhyme label="d" type="m" corresp="#s6:l6">droom</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Gh’en sijt dan, arme <rhyme label="a" type="f">dieren</rhyme>!</l>
        <l id="s7:l2" met="3" type="-+">Gh’en sijter noit <rhyme label="b" type="m">geweest</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Eer dat uw’ Kerk <rhyme label="a" type="f" corresp="#s7:l1">verzieren</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Kwam d’opgeblaze <rhyme label="b" type="m" corresp="#s7:l2">geest</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Van een Noions <rhyme label="c" type="f">Kanunni</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Calvijn, diet nieu <rhyme label="d" type="m">Gebou</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Van d’uitgelope <rhyme label="c" type="f" corresp="#s7:l5">Munnik</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Noch wat verbet’ren <rhyme label="d" type="m" corresp="#s7:l6">wou</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Vaerd wel met zulken <rhyme label="a" type="f">Tempel</rhyme>.</l>
        <l id="s8:l2" met="3" type="-+">Vaerd wel Godzalig <rhyme label="b" type="m">volk</rhyme>!</l>
        <l id="s8:l3" met="3" type="-+">Maer niet dan op ’t <rhyme label="a" type="f" corresp="#s8:l1">exempel</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Van een zoo nieuwen <rhyme label="b" type="m" corresp="#s8:l2">Tolk</rhyme>.</l>
        <l id="s8:l5" met="3" type="-+">Durft ghy dan <rhyme label="c" type="f">hasarderen</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Uw’ ziel op dat <rhyme label="d" type="m">begin</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Zoo wil u God <rhyme label="c" type="f" corresp="#s8:l5">bekeren</rhyme></l>
        <l id="s8:l8" met="3" type="-+">En geven beter <rhyme label="d" type="m" corresp="#s8:l6">zin</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

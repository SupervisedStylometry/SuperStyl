      <category translation="formal genres">formele genres</category>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Leenaert Clock</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Syt my bystandich in den <rhyme label="a" type="m">noot</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">O mijn Godt, nae u goetheyt <rhyme label="a" type="m" corresp="#s1:l1">groot</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Ghy kent mijn cleyn <rhyme label="b" type="f">vermeughen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Van deuchde ben ick naeckt en <rhyme label="a" type="m" corresp="#s1:l1">bloot</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Om my recht te <rhyme label="b" type="f" corresp="#s1:l3">verheughen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ziet mijn hert aen, maeckt dat <rhyme label="a" type="m">bereyt</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Vervult het met <rhyme label="a" type="m" corresp="#s2:l1">gherechticheyt</rhyme></l>
        <l id="s2:l3" met="3" type="-+">En met ws Gheestes <rhyme label="b" type="f">crachten</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Gheeft my het rechte <rhyme label="a" type="m" corresp="#s2:l1">onderscheyt</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Sijn wercken te <rhyme label="b" type="f" corresp="#s2:l3">betrachten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Houdt my in u vreese <rhyme label="a" type="m">altijdt</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Dat het quaet doen van my <rhyme label="a" type="m" corresp="#s3:l1">vermijdt</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Worde, en tot den <rhyme label="b" type="f">goeden</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Ick my mach gheven met <rhyme label="a" type="m" corresp="#s3:l1">jolijt</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Soo uwen wil <rhyme label="b" type="f" corresp="#s3:l3">bevroeden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">En wijslijck mach alsoo <rhyme label="a" type="m">voortgaen</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Voorsichtich op die smalle <rhyme label="a" type="m" corresp="#s4:l1">baen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">V vreese wel <rhyme label="b" type="f">versinnen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Van Menschen wijsheyt ledich <rhyme label="a" type="m" corresp="#s4:l1">staen</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Die dwaesheyt niet <rhyme label="b" type="f" corresp="#s4:l3">beminnen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Teere ben ick, biedt my u <rhyme label="a" type="m">handt</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">En gheeft my Heer een recht <rhyme label="a" type="m" corresp="#s5:l1">verstandt</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Dat ick mach <rhyme label="b" type="f">onderscheyden</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Het goet en t’quaet, en soo int <rhyme label="a" type="m" corresp="#s5:l1">landt</rhyme></l>
        <l id="s5:l5" met="3" type="-+">My tot der deucht <rhyme label="b" type="f" corresp="#s5:l3">bereyden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Te raden wat my t’beste <rhyme label="a" type="m">zy</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Gheeft my des Gheestes crachte <rhyme label="a" type="m" corresp="#s6:l1">vry</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Waer ick sal henen <rhyme label="b" type="f">keeren</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Dat uwen heylighen Gheest seer <rhyme label="a" type="m" corresp="#s6:l1">bly</rhyme></l>
        <l id="s6:l5" met="3" type="-+">My mach raden en <rhyme label="b" type="f" corresp="#s6:l3">leeren</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">En my verstercke als een <rhyme label="a" type="m">man</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Tot ick my overwinnen <rhyme label="a" type="m" corresp="#s7:l1">can</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Die Weerelt heel <rhyme label="b" type="f">vertrede</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">My leer ontrecken heel daer <rhyme label="a" type="m" corresp="#s7:l1">van</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">En houden Christi <rhyme label="b" type="f" corresp="#s7:l3">zeden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Sterckt my door u conste midts <rhyme label="a" type="m">dien</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Dat ick het onderscheydt mach <rhyme label="a" type="m" corresp="#s8:l1">sien</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Des goeden ende <rhyme label="b" type="f">quaden</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">En soo het onrechte mach <rhyme label="a" type="m" corresp="#s8:l1">vlien</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Treden in uwe <rhyme label="b" type="f" corresp="#s8:l3">paden</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Doch eyndelijck gheeft my, O <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Godtsalicheyt tot uwer <rhyme label="a" type="m" corresp="#s9:l1">eer</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Op dat ick doch mach <rhyme label="b" type="f">wesen</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Hemels ghesint nu altijdt <rhyme label="a" type="m" corresp="#s9:l1">meer</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Als u lief Kindt <rhyme label="b" type="f" corresp="#s9:l3">ghepresen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Ter eeren Heer van uwen <rhyme label="a" type="m">Naem</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Maeckt my dies weerdich en <rhyme label="a" type="m" corresp="#s10:l1">bequaem</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Soo sal ick my <rhyme label="b" type="f">verblijden</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">En my als een kindt <rhyme label="a" type="m" corresp="#s10:l1">ghehoorsaem</rhyme></l>
        <l id="s10:l5" met="3" type="-+">Schicken tot alle <rhyme label="b" type="f" corresp="#s10:l3">tijden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

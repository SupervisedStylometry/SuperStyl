<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>21372</id>
    <date>
      <year-start>1591</year-start>
      <year-end>1592</year-end>
    </date>
    <tags>
      <tag standard-name="schriftuurlijk lied" translation="scripture song">schriftuurlijk lied</tag>
      <tag standard-name="vermaanlied" translation="admonitory song">vermaanlied</tag>
    </tags>
    <melody>Bedrukt tot aller stond</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Soetken Gerijts</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">HOort menschen een nieuwe <rhyme label="a" type="m">liet</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Tot uwer liefden <rhyme label="b" type="f">singhen</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Versuymt v siele toch <rhyme label="a" type="m" corresp="#s1:l1">niet</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Maer wilt met grooter <rhyme label="a" type="m" corresp="#s1:l1">vliet</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Na denghe poorte <rhyme label="b" type="f" corresp="#s1:l2">dringhen</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Dese werelt is voor veele <rhyme label="a" type="m">ghemaect</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Maer die toecomende <rhyme label="b" type="f">waerlijck</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Voor weynich o menschen <rhyme label="a" type="m" corresp="#s2:l1">ontwaect</rhyme></l>
        <l id="s2:l4" met="3" type="-+">dat ghy dese reden wel <rhyme label="a" type="m" corresp="#s2:l1">smaeckt</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Die Engel sprack dit <rhyme label="b" type="f" corresp="#s2:l2">claerlijck</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Die werelt gaet groffelijck <rhyme label="a" type="m">mis</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Al van Gods waerheyt <rhyme label="b" type="f">verde</rhyme></l>
        <l id="s3:l3" met="3" type="-+">den gherechtighen wech wort <rhyme label="a" type="m" corresp="#s3:l1">wis</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Gheacht voor <rhyme label="a" type="m" corresp="#s3:l1">verderffenis</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Sapientie leest int <rhyme label="b" type="f" corresp="#s3:l2">derde</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Seer enghe so is die <rhyme label="a" type="m">poort</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Die daer leyt totten <rhyme label="b" type="f">leuen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Weynich vinden dese <rhyme label="a" type="m" corresp="#s4:l1">hoort</rhyme></l>
        <l id="s4:l4" met="3" type="-+">In den ruymen wech gaeter veel <rhyme label="a" type="m" corresp="#s4:l1">voort</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Wy vindent claer <rhyme label="b" type="f" corresp="#s4:l2">beschreuen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">O menschen maeckt v <rhyme label="a" type="m">afscheyt</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Wt den ruymen <rhyme label="b" type="f">passagie</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Want si totter verdoemenis <rhyme label="a" type="m" corresp="#s5:l1">leyt</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Op dat ghy niet eewich en <rhyme label="a" type="m" corresp="#s5:l1">schreyt</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Wert een Christen <rhyme label="b" type="f" corresp="#s5:l2">personagie</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ghy Christenen al <rhyme label="a" type="m">ghemeyn</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Strijt vroom in deser <rhyme label="b" type="f">vreu</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Wilt dat enghe padeken <rhyme label="a" type="m" corresp="#s6:l1">treen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Alst hier is duer <rhyme label="a" type="m" corresp="#s6:l1">ghestreden</rhyme></l>
        <l id="s6:l5" met="3" type="-+">So sal die blijschap <rhyme label="b" type="f" corresp="#s6:l2">dueren</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Die rechtueerdige sielen <rhyme label="a" type="m">zijn</rhyme></l>
        <l id="s7:l2" met="3" type="-+">In die handen Gods hoort <rhyme label="b" type="f">reden</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Het heeft voor den onwijsen een <rhyme label="a" type="m" corresp="#s7:l1">schijn</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Oft si storuen verstaet wel <rhyme label="a" type="m" corresp="#s7:l1">mijn</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Maer si gaen in <rhyme label="b" type="f" corresp="#s7:l2">vreden</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">In die werelt sult ghy hebben <rhyme label="a" type="m">druck</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Maer in vreden sult ghy <rhyme label="b" type="f">rusten</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Spreect Christus verstaet wel dit <rhyme label="a" type="m" corresp="#s8:l1">stuck</rhyme></l>
        <l id="s8:l4" met="3" type="-+">dat is zijn volcx <rhyme label="a" type="m" corresp="#s8:l1">gheluck</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Nae tlichaem gheen <rhyme label="b" type="f" corresp="#s8:l2">wellusten</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Die werelt sal <rhyme label="a" type="m">verblijen</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Ghy sult wenen ende <rhyme label="b" type="f">schreijen</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Maer v droefheyt wilt hier op <rhyme label="a" type="m" corresp="#s9:l1">sien</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Sal veranderen nae Christus <rhyme label="a" type="m" corresp="#s9:l1">bedien</rhyme></l>
        <l id="s9:l5" met="3" type="-+">In blijschap diet <rhyme label="b" type="f" corresp="#s9:l2">verbeyen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Die vruecht sal zijn bouen <rhyme label="a" type="m">al</rhyme></l>
        <l id="s10:l2" met="3" type="-+">So ons Christus hout voor <rhyme label="b" type="f">ooghen</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Hy sprack hoort dit <rhyme label="a" type="m" corresp="#s10:l1">gheschal</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Dat niemant die blijschap en <rhyme label="a" type="m" corresp="#s10:l1">sal</rhyme></l>
        <l id="s10:l5" met="3" type="-+">Van haer nemen <rhyme label="b" type="f" corresp="#s10:l2">moghen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Hoe haest isset hier <rhyme label="a" type="m">ghedaen</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Al dat men mach <rhyme label="b" type="f">aenschouwen</rhyme></l>
        <l id="s11:l3" met="3" type="-+">dat is tijtelijck nae Paulus <rhyme label="a" type="m" corresp="#s11:l1">vermaen</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Al dat tijtelijck is moet <rhyme label="a" type="m" corresp="#s11:l1">vergaen</rhyme></l>
        <l id="s11:l5" met="3" type="-+">Wilt v daer niet seer <rhyme label="b" type="f" corresp="#s11:l2">aenhouwen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Werct spijse die niet en <rhyme label="a" type="m">vergaet</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Wilt inden hemel schat <rhyme label="b" type="f">vergaren</rhyme></l>
        <l id="s12:l3" met="3" type="-+">doet Comenschap oft ghy niet en <rhyme label="a" type="m" corresp="#s12:l1">besaet</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Nae dat onuerganckelijcke <rhyme label="a" type="m" corresp="#s12:l1">staet</rhyme></l>
        <l id="s12:l5" met="3" type="-+">Die werelt laet toch <rhyme label="b" type="f" corresp="#s12:l2">varen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Verblijt v nae Paulus <rhyme label="a" type="m">leer</rhyme></l>
        <l id="s13:l2" met="3" type="-+">Anderwerf wilt v <rhyme label="b" type="f">verblijden</rhyme></l>
        <l id="s13:l3" met="3" type="-+">Ende dat inden <rhyme label="a" type="m" corresp="#s13:l1">Heer</rhyme></l>
        <l id="s13:l4" met="3" type="-+">Acht op dit woordeken <rhyme label="a" type="m" corresp="#s13:l1">seer</rhyme></l>
        <l id="s13:l5" met="3" type="-+">Wilt ydel glorij <rhyme label="b" type="f" corresp="#s13:l2">mijden</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Nu menschen wie dat ghy <rhyme label="a" type="m">zijt</rhyme>.</l>
        <l id="s14:l2" met="3" type="-+">Wilt op die Schriftuer <rhyme label="b" type="f">achten</rhyme></l>
        <l id="s14:l3" met="3" type="-+">die Heer sal comen <rhyme label="a" type="m" corresp="#s14:l1">subijt</rhyme></l>
        <l id="s14:l4" met="3" type="-+">Hebt v soo in desen <rhyme label="a" type="m" corresp="#s14:l1">tijt</rhyme></l>
        <l id="s14:l5" met="3" type="-+">dat ghy tleuer muecht <rhyme label="b" type="f" corresp="#s14:l2">verwachten</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <author>Jacobus Revius</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HEer, die my eertijts hebt <rhyme label="a" type="m">verlicht</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Ick roepe nachten ende <rhyme label="b" type="f">dagen</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Tot u, en bidde, laet mijn <rhyme label="b" type="f" corresp="#s1:l2">clagen</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Doch comen voor u <rhyme label="a" type="m" corresp="#s1:l1">aengesicht</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Wilt neygen vriendelijck u <rhyme label="c" type="f">ooren</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">En mijn gestadich schreyen <rhyme label="c" type="f" corresp="#s1:l5">hooren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Mijn siel is sat van angst en <rhyme label="a" type="m">noot</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Tot aen het graf genaeckt mijn <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Ick ben alreede <rhyme label="b" type="f" corresp="#s2:l2">door-geschreven</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Beneffens die daer liggen <rhyme label="a" type="m" corresp="#s2:l1">doot</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">Soo dat men my gelijck mach <rhyme label="c" type="f">achten</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Een mensch ontbloot van alle <rhyme label="c" type="f" corresp="#s2:l5">crachten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ick ben alree gescheyden <rhyme label="a" type="m">af</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Gelijck als die die metten <rhyme label="b" type="f">sweerde</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Gevellet, rusten onder <rhyme label="b" type="f" corresp="#s3:l2">d'eerde</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Verborgen in het stille <rhyme label="a" type="m" corresp="#s3:l1">graf</rhyme>;</l>
        <l id="s3:l5" met="4" type="-+">Die ghy, o Heer, niet meer <rhyme label="c" type="f">gedencket</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Na dat u hant haer heeft <rhyme label="c" type="f" corresp="#s3:l5">gecrencket</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ghy laet my in een diepen <rhyme label="a" type="m">poel</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Versmooren, en geheel <rhyme label="b" type="f">vervuylen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">In duysternis, in bange <rhyme label="b" type="f" corresp="#s4:l2">cuylen</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Daer ick noch gront noch lant en <rhyme label="a" type="m" corresp="#s4:l1">voel</rhyme>:</l>
        <l id="s4:l5" met="4" type="-+">V gramschap laetty op my <rhyme label="c" type="f">woeden</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Als ongestuyme <rhyme label="c" type="f" corresp="#s4:l5">water-vloeden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Niet een van mijn bekenden <rhyme label="a" type="m">is</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Die hulp of troost my sou <rhyme label="b" type="f">bewijsen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Ghy maeckt my haer tot een <rhyme label="b" type="f" corresp="#s5:l2">afgrijsen</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Ick sitt' in een <rhyme label="a" type="m" corresp="#s5:l1">gevanckenis</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">En allen raet is my <rhyme label="c" type="f">benomen</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Ick weet niet hoe ick uyt sal <rhyme label="c" type="f" corresp="#s5:l5">comen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Door 't cruys is mijn gesicht <rhyme label="a" type="m">ontstelt</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Ick roepe daeglijcx, Heer <rhyme label="b" type="f">almachtich</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">En streck tot u mijn handen <rhyme label="b" type="f" corresp="#s6:l2">clachtich</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Wilt eenmael toonen u <rhyme label="a" type="m" corresp="#s6:l1">gewelt</rhyme>.</l>
        <l id="s6:l5" met="4" type="-+">Wat wachtty? wildy laten <rhyme label="c" type="f">mercken</rhyme></l>
        <l id="s6:l6" met="4" type="-+">De dooden uwe <rhyme label="c" type="f" corresp="#s6:l5">wonderwercken</rhyme>?</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Sal het verstorven lijck <rhyme label="a" type="m">opstaen</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Om uwe daden te <rhyme label="b" type="f">verconden</rhyme>?</l>
        <l id="s7:l3" met="4" type="-+">Of sullen de begraven <rhyme label="b" type="f" corresp="#s7:l2">monden</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Van uwe goetheyt doen <rhyme label="a" type="m" corresp="#s7:l1">vermaen</rhyme>?</l>
        <l id="s7:l5" met="4" type="-+">Hoe sullen van u trouwe <rhyme label="c" type="f">spreken</rhyme></l>
        <l id="s7:l6" met="4" type="-+">Die onder d'aerde zijn <rhyme label="c" type="f" corresp="#s7:l5">gesteken</rhyme>?</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Wert op u wonderen <rhyme label="a" type="m">gedacht</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Int doncker, daermen niet can <rhyme label="b" type="f">weten</rhyme>?</l>
        <l id="s8:l3" met="4" type="-+">Wie can, daert alles wert <rhyme label="b" type="f" corresp="#s8:l2">vergeten</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Op u gerechtheyt hebben <rhyme label="a" type="m" corresp="#s8:l1">acht</rhyme>?</l>
        <l id="s8:l5" met="4" type="-+">Doch u mijn beed' ick <rhyme label="c" type="f">vorendrage</rhyme></l>
        <l id="s8:l6" met="4" type="-+">Vroech voor het lichten vanden <rhyme label="c" type="f" corresp="#s8:l5">dage</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Hoe comtet dat ghy my <rhyme label="a" type="m">verstoot</rhyme></l>
        <l id="s9:l2" met="4" type="-+">En houdt u aengesicht <rhyme label="b" type="f">verborgen</rhyme>?</l>
        <l id="s9:l3" met="4" type="-+">Van mijner jeucht leef ick vol <rhyme label="b" type="f" corresp="#s9:l2">sorgen</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Als die voor oogen siet den <rhyme label="a" type="m" corresp="#s9:l1">doot</rhyme>.</l>
        <l id="s9:l5" met="4" type="-+">Ia u vervaernis moet ick <rhyme label="c" type="f">dragen</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Die my het herte doet <rhyme label="c" type="f" corresp="#s9:l5">vertsagen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Want over my u gramschap <rhyme label="a" type="m">gaet</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">En u verschrickingen my <rhyme label="b" type="f">drucken</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Die als een stroom my <rhyme label="b" type="f" corresp="#s10:l2">neder-rucken</rhyme></l>
        <l id="s10:l4" met="4" type="-+">En quellen sonder <rhyme label="a" type="m" corresp="#s10:l1">onderlaet</rhyme>.</l>
        <l id="s10:l5" met="4" type="-+">Van alle canten sy my <rhyme label="c" type="f">dringen</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Den gantschen dach sy my <rhyme label="c" type="f" corresp="#s10:l5">om-ringen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Ghy hebt van my gescheyden <rhyme label="a" type="m">wijt</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Mijn naeste vrienden ende <rhyme label="b" type="f">magen</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Sy die my te beminnen <rhyme label="b" type="f" corresp="#s11:l2">plagen</rhyme></l>
        <l id="s11:l4" met="4" type="-+">Vertrecken haer van mijne <rhyme label="a" type="m" corresp="#s11:l1">zijd'</rhyme></l>
        <l id="s11:l5" met="4" type="-+">Al mijn bekenden zijn te <rhyme label="c" type="f">soecken</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">En bergen haer in duyst're <rhyme label="c" type="f" corresp="#s11:l5">hoecken</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

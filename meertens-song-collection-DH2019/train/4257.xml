  <author>Pieter Lenaerts van der Goes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">SChoon wtgelesen // <rhyme label="a" type="m">greyn</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Dierbaer bloemken <rhyme label="b" type="f">soet-guerigh</rhyme>,</l>
        <l id="s1:l3" met="3" type="+-">V minsaem wesen // <rhyme label="a" type="m" corresp="#s1:l1">reyn</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Geneest mijn herte <rhyme label="b" type="f" corresp="#s1:l2">truerigh</rhyme>:</l>
        <l id="s1:l5" met="3" type="-+">En <rhyme label="c" type="m">conforteert</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Dat ick my soo <rhyme label="d" type="f">verhuegde</rhyme>,</l>
        <l id="s1:l7" met="3" type="+-">Met bysonder <rhyme label="d" type="f" corresp="#s1:l6">vruegde</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Die alle vrueght <rhyme label="c" type="m" corresp="#s1:l5">passeert</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Om mijn iongh leuen // <rhyme label="a" type="m">dan</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Hier in <rhyme label="b" type="f">continueren</rhyme>,</l>
        <l id="s2:l3" met="3" type="+-">Als een verheuen // <rhyme label="a" type="m" corresp="#s2:l1">man</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Met u te <rhyme label="b" type="f" corresp="#s2:l2">triumpheren</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">Is my van <rhyme label="c" type="m">noodt</rhyme></l>
        <l id="s2:l6" met="3" type="-+">V vriendelick <rhyme label="d" type="f">versoeten</rhyme>,</l>
        <l id="s2:l7" met="3" type="+-">Of my sal <rhyme label="d" type="f" corresp="#s2:l6">ontmoeten</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Niet anders dan de <rhyme label="c" type="m" corresp="#s2:l5">doot</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Een edel herte // <rhyme label="a" type="m">draeght</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Dyn knecht u, t'eender <rhyme label="b" type="f">somme</rhyme>:</l>
        <l id="s3:l3" met="3" type="+-">Die noch van smerte // <rhyme label="a" type="m" corresp="#s3:l1">claeght</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Ghy weet reden <rhyme label="b" type="f" corresp="#s3:l2">waeromme</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">Eenigh <rhyme label="c" type="m">secreet</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Mach ick vryhertich <rhyme label="d" type="f">spreken</rhyme>,</l>
        <l id="s3:l7" met="3" type="+-">Laet my niet <rhyme label="d" type="f" corresp="#s3:l6">ontbreken</rhyme></l>
        <l id="s3:l8" met="3" type="-+">T'secours, dwelck ghy wel <rhyme label="c" type="m" corresp="#s3:l5">weet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">Tot in mijn sterven // <rhyme label="a" type="m">sal</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Mijn siel, u niet <rhyme label="b" type="f">beswijcken</rhyme>:</l>
        <l id="s4:l3" met="3" type="+-">Wats doch t'beerven // <rhyme label="a" type="m" corresp="#s4:l1">al</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Van duysent <rhyme label="b" type="f" corresp="#s4:l2">Coninghrijcken</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">My doch <rhyme label="c" type="m">gelooft</rhyme>:</l>
        <l id="s4:l6" met="3" type="-+">Ontbreect dijn glans <rhyme label="d" type="f">bepeerelt</rhyme>,</l>
        <l id="s4:l7" met="3" type="+-">T'schijnt de gansche <rhyme label="d" type="f" corresp="#s4:l6">weerelt</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Is van haer licht <rhyme label="c" type="m" corresp="#s4:l5">berooft</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="+-">Keert dan u wangen // <rhyme label="a" type="m">schoon</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Tot my, als <rhyme label="b" type="f">medecijne</rhyme>:</l>
        <l id="s5:l3" met="3" type="+-">Laet my ontfangen // <rhyme label="a" type="m" corresp="#s5:l1">loon</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Voor al mijn smert, en <rhyme label="b" type="f" corresp="#s5:l2">pijne</rhyme>:</l>
        <l id="s5:l5" met="3" type="-+">Want al dat <rhyme label="c" type="m">leeft</rhyme></l>
        <l id="s5:l6" met="3" type="-+">En can geen troost <rhyme label="d" type="f">verleenen</rhyme></l>
        <l id="s5:l7" met="3" type="+-">T'is een bloedigh <rhyme label="d" type="f" corresp="#s5:l6">weenen</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Als ghy geen blijschap <rhyme label="c" type="m" corresp="#s5:l5">geeft</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="+-">Edel Jongvrouwe // <rhyme label="a" type="m">soet</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Wilt van my niet <rhyme label="b" type="f">vervremen</rhyme>,</l>
        <l id="s6:l3" met="3" type="+-">Die my den rouwe // <rhyme label="a" type="m" corresp="#s6:l1">doet</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">En weder cont <rhyme label="b" type="f" corresp="#s6:l2">afnemen</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Reyct my de <rhyme label="c" type="m">hant</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Die den deerlick <rhyme label="d" type="f">versoncken</rhyme>,</l>
        <l id="s6:l7" met="3" type="+-">Soo is u <rhyme label="d" type="f" corresp="#s6:l6">geschoncken</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Mijn hert, tot u <rhyme label="c" type="m" corresp="#s6:l5">garant</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="+-">Neemt doch (Princesse // <rhyme label="a" type="m">fijn</rhyme>)</l>
        <l id="s7:l2" met="3" type="-+">Ter hant, mijn <rhyme label="b" type="f">lamenteeren</rhyme>:</l>
        <l id="s7:l3" met="3" type="+-">Ten can meestresse // <rhyme label="a" type="m" corresp="#s7:l1">zijn</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Soo cunstich int <rhyme label="b" type="f" corresp="#s7:l2">cureeren</rhyme>:</l>
        <l id="s7:l5" met="3" type="-+">
          <rhyme label="c" type="m">D'inwendicheyt</rhyme>
        </l>
        <l id="s7:l6" met="3" type="-+">Is naer dijn troost in <rhyme label="d" type="f">wake</rhyme>,</l>
        <l id="s7:l7" met="3" type="+-">Dus zijt geen <rhyme label="d" type="f" corresp="#s7:l6">oorsake</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Van mijn <rhyme label="c" type="m" corresp="#s7:l5">ellendicheyt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

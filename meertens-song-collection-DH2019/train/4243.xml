      <year-start>1602</year-start>
      <year-end>1602</year-end>
    </date>
    <tags>
      <tag standard-name="liefdeslied" translation="love song">liefdeslied</tag>
      <tag standard-name="afscheidslied" translation="farewell song">afscheidslied</tag>
      <tag standard-name="acrostichon" translation="acrostic song">acrostichon</tag>
    </tags>
    <melody>Grâce au bon petit Jésus</melody>
    <categories>
      <category translation="formal genres">formele genres</category>
      <category translation="love and sex">liefde en seks</category>
      <category translation="occasions">gelegenheden</category>
    </categories>
  <author>Pieter Lenaerts van der Goes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">CIeraet der maechden // <rhyme label="a" type="m">soet</rhyme>,</l>
        <l id="s1:l2" met="2" type="-+">Pointich <rhyme label="b" type="m">geraect</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">In als <rhyme label="b" type="m" corresp="#s1:l2">volmaect</rhyme>:</l>
        <l id="s1:l4" met="3" type="+-">Mijnen versaechden // <rhyme label="a" type="m" corresp="#s1:l1">moet</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">(Vierich <rhyme label="b" type="m" corresp="#s1:l2">ontwaect</rhyme>)</l>
        <l id="s1:l6" met="2" type="-+">Is <rhyme label="b" type="m" corresp="#s1:l2">veroorsaect</rhyme></l>
        <l id="s1:l7" met="5" type="-+">Voor u te toogen nu, mijn lijden <rhyme label="b" type="m" corresp="#s1:l2">naeckt</rhyme>:</l>
        <l id="s1:l8" met="2" type="-+">O <rhyme label="c" type="f">troosterinne</rhyme>,</l>
        <l id="s1:l9" met="2" type="+-">V soete <rhyme label="c" type="f" corresp="#s1:l8">minne</rhyme></l>
        <l id="s1:l10" met="2" type="-+">Naer wenschen <rhyme label="b" type="m" corresp="#s1:l2">smaect</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Anders geen leuen // <rhyme label="a" type="m">is</rhyme>,</l>
        <l id="s2:l2" met="2" type="-+">Dan duer u <rhyme label="b" type="m">reyn</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">By-zijn <rhyme label="b" type="m" corresp="#s2:l2">certeyn</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">Al wat verheuen // <rhyme label="a" type="m" corresp="#s2:l1">is</rhyme></l>
        <l id="s2:l5" met="2" type="-+">Op d'aertsche <rhyme label="b" type="m" corresp="#s2:l2">pleyn</rhyme>,</l>
        <l id="s2:l6" met="2" type="-+">Dunct my seer <rhyme label="b" type="m" corresp="#s2:l2">cleyn</rhyme>:</l>
        <l id="s2:l7" met="5" type="-+">Als absenteren moet, zulck peerle <rhyme label="b" type="m" corresp="#s2:l2">greyn</rhyme></l>
        <l id="s2:l8" met="2" type="-+">Vol van <rhyme label="c" type="f">genaden</rhyme>,</l>
        <l id="s2:l9" met="2" type="+-">Diet soud' <rhyme label="c" type="f" corresp="#s2:l8">versmaden</rhyme></l>
        <l id="s2:l10" met="2" type="-+">Waer een <rhyme label="b" type="m" corresp="#s2:l2">vileyn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Tot geenen stonde // <rhyme label="a" type="m">noyt</rhyme></l>
        <l id="s3:l2" met="2" type="-+">En is my <rhyme label="b" type="m">yet</rhyme></l>
        <l id="s3:l3" met="2" type="-+">Te swaer <rhyme label="b" type="m" corresp="#s3:l2">geschiet</rhyme>:</l>
        <l id="s3:l4" met="3" type="+-">Was tot den gronde // <rhyme label="a" type="m" corresp="#s3:l1">oyt</rhyme></l>
        <l id="s3:l5" met="2" type="-+">T'hert vol <rhyme label="b" type="m" corresp="#s3:l2">verdriet</rhyme>,</l>
        <l id="s3:l6" met="2" type="-+">Ten docht my <rhyme label="b" type="m" corresp="#s3:l2">niet</rhyme>:</l>
        <l id="s3:l7" met="5" type="-+">Ghy waert doch lief, die deur u soet <rhyme label="b" type="m" corresp="#s3:l2">gebiet</rhyme>,</l>
        <l id="s3:l8" met="2" type="-+">Genaest de <rhyme label="c" type="f">smerte</rhyme>:</l>
        <l id="s3:l9" met="2" type="+-">Op v mijn <rhyme label="c" type="f" corresp="#s3:l8">herte</rhyme></l>
        <l id="s3:l10" met="2" type="-+">Hem oyt <rhyme label="b" type="m" corresp="#s3:l2">verliet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">Haestigh genesen // <rhyme label="a" type="m">sal</rhyme>,</l>
        <l id="s4:l2" met="2" type="-+">Al dat nu <rhyme label="b" type="m">mijn</rhyme></l>
        <l id="s4:l3" met="2" type="-+">Hert doet <rhyme label="b" type="m" corresp="#s4:l2">gepijn</rhyme>:</l>
        <l id="s4:l4" met="3" type="+-">Thoont ghy naer desen // <rhyme label="a" type="m" corresp="#s4:l1">val</rhyme></l>
        <l id="s4:l5" met="2" type="-+">My een <rhyme label="b" type="m" corresp="#s4:l2">Divijn</rhyme></l>
        <l id="s4:l6" met="2" type="-+">Schoon <rhyme label="b" type="m" corresp="#s4:l2">sonne-schijn</rhyme>:</l>
        <l id="s4:l7" met="5" type="-+">Mijn duyster sinnen dan, verlichten <rhyme label="b" type="m" corresp="#s4:l2">fijn</rhyme>:</l>
        <l id="s4:l8" met="2" type="-+">Ghy moet met <rhyme label="c" type="f">eeren</rhyme></l>
        <l id="s4:l9" met="2" type="+-">Tot mijn <rhyme label="c" type="f" corresp="#s4:l8">cureeren</rhyme></l>
        <l id="s4:l10" met="2" type="-+">De naeste <rhyme label="b" type="m" corresp="#s4:l2">zijn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="+-">Aldus vriendinne // <rhyme label="a" type="m">ghy</rhyme></l>
        <l id="s5:l2" met="2" type="-+">Zijt een <rhyme label="b" type="m">prieel</rhyme>,</l>
        <l id="s5:l3" met="2" type="-+">Borcht en <rhyme label="b" type="m" corresp="#s5:l2">Casteel</rhyme>,</l>
        <l id="s5:l4" met="3" type="+-">Vanden beginne <rhyme label="a" type="m" corresp="#s5:l1">my</rhyme></l>
        <l id="s5:l5" met="2" type="-+">Van God tot <rhyme label="b" type="m" corresp="#s5:l2">deel</rhyme></l>
        <l id="s5:l6" met="2" type="-+">Gheschoncken <rhyme label="b" type="m" corresp="#s5:l2">heel</rhyme>:</l>
        <l id="s5:l7" met="5" type="-+">Alle de schatten van d'aertsche <rhyme label="b" type="m" corresp="#s5:l2">tonneel</rhyme>,</l>
        <l id="s5:l8" met="2" type="-+">acht ick seer <rhyme label="c" type="f">cleene</rhyme>:</l>
        <l id="s5:l9" met="2" type="+-">Ghy zijt <rhyme label="c" type="f" corresp="#s5:l8">alleene</rhyme></l>
        <l id="s5:l10" met="2" type="-+">T'schoonste <rhyme label="b" type="m" corresp="#s5:l2">Juweel</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="+-">RYN stroomigh vloyen // <rhyme label="a" type="m">claer</rhyme>,</l>
        <l id="s6:l2" met="2" type="-+">Dat ghy <rhyme label="b" type="m">altijt</rhyme></l>
        <l id="s6:l3" met="2" type="-+">Grondeloos <rhyme label="b" type="m" corresp="#s6:l2">zijt</rhyme>,</l>
        <l id="s6:l4" met="3" type="+-">En van vermoyen // <rhyme label="a" type="m" corresp="#s6:l1">swaer</rhyme>,</l>
        <l id="s6:l5" met="2" type="-+">My dus <rhyme label="b" type="m" corresp="#s6:l2">bevrijt</rhyme>,</l>
        <l id="s6:l6" met="2" type="-+">T'wert seer <rhyme label="b" type="m" corresp="#s6:l2">benijt</rhyme>:</l>
        <l id="s6:l7" met="5" type="-+">Doch te vergeefs: ghy hebt in desen <rhyme label="b" type="m" corresp="#s6:l2">strijt</rhyme></l>
        <l id="s6:l8" met="2" type="-+">Voor my <rhyme label="c" type="f">gestreden</rhyme>,</l>
        <l id="s6:l9" met="2" type="+-">My vind' ick <rhyme label="c" type="f" corresp="#s6:l8">heden</rhyme></l>
        <l id="s6:l10" met="2" type="-+"><rhyme label="b" type="m" corresp="#s6:l2">Gebenedijt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="+-">Adieu besneden // <rhyme label="a" type="m">bruyt</rhyme>,</l>
        <l id="s7:l2" met="2" type="-+">Van leden <rhyme label="b" type="m">seer</rhyme></l>
        <l id="s7:l3" met="2" type="-+">Proper, en <rhyme label="b" type="m" corresp="#s7:l2">teer</rhyme>:</l>
        <l id="s7:l4" met="3" type="+-">Al gae ick treden // <rhyme label="a" type="m" corresp="#s7:l1">wt</rhyme>,</l>
        <l id="s7:l5" met="2" type="-+">Wy spreken <rhyme label="b" type="m" corresp="#s7:l2">meer</rhyme>,</l>
        <l id="s7:l6" met="2" type="-+">Ter naester <rhyme label="b" type="m" corresp="#s7:l2">keer</rhyme>:</l>
        <l id="s7:l7" met="5" type="-+">Princesse maect my weerdich u <rhyme label="b" type="m" corresp="#s7:l2">Jonckheer</rhyme></l>
        <l id="s7:l8" met="2" type="-+">Corts naer dit <rhyme label="c" type="f">scheyden</rhyme>,</l>
        <l id="s7:l9" met="2" type="+-">Ick sal <rhyme label="c" type="f" corresp="#s7:l8">verbeyden</rhyme></l>
        <l id="s7:l10" met="2" type="-+">Den tijt <rhyme label="b" type="m" corresp="#s7:l2">wanneer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

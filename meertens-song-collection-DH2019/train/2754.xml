      <category translation="emotions">emoties</category>
    </categories>
  <author>Bernardus Busschoff</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">EErtijdts pleegh ick wel te <rhyme label="a" type="f">groeyen</rhyme>,</l>
        <l id="s1:l2" met="2" type="+-">En te <rhyme label="a" type="f" corresp="#s1:l1">bloeyen</rhyme></l>
        <l id="s1:l3" met="4" type="+-">In 't gezegent <rhyme label="b" type="m">Nederlandt</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Als een wijn-stock <rhyme label="c" type="f">uytgelesen</rhyme>,</l>
        <l id="s1:l5" met="2" type="+-">Hoogh <rhyme label="c" type="f" corresp="#s1:l4">geresen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Door den vinger Godts <rhyme label="b" type="m" corresp="#s1:l3">geplant</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Door Godts zegen en <rhyme label="a" type="f">genade</rhyme>,</l>
        <l id="s2:l2" met="2" type="+-">Vroegh en <rhyme label="a" type="f" corresp="#s2:l1">spade</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Wierdt ick vruchtbaerlijck <rhyme label="b" type="m">bedouwt</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Dies veel jonge schoone <rhyme label="c" type="f">loten</rhyme></l>
        <l id="s2:l5" met="2" type="+-">Milt <rhyme label="c" type="f" corresp="#s2:l4">gesproten</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Wiessen uyt mijn sappigh <rhyme label="b" type="m" corresp="#s2:l3">houdt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">En ik was met groene <rhyme label="a" type="f">bladen</rhyme></l>
        <l id="s3:l2" met="2" type="+-">Dicht <rhyme label="a" type="f" corresp="#s3:l1">beladen</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">'t Welck soo koelen schaduw' <rhyme label="b" type="m">gaf</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Dat uyt wijdt gelegen <rhyme label="c" type="f">hoecken</rhyme></l>
        <l id="s3:l5" met="2" type="+-">My quam <rhyme label="c" type="f" corresp="#s3:l4">soecken</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Meenigh hert, van hitte <rhyme label="b" type="m" corresp="#s3:l3">laf</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Met vermaeck en groot <rhyme label="a" type="f">behagen</rhyme></l>
        <l id="s4:l2" met="2" type="+-">My <rhyme label="a" type="f" corresp="#s4:l1">besagen</rhyme></l>
        <l id="s4:l3" met="4" type="+-">All' mijn Vrienden doen ter <rhyme label="b" type="m">tijdt</rhyme>:</l>
        <l id="s4:l4" met="4" type="+-">Maer nu klappen in haer <rhyme label="c" type="f">handen</rhyme></l>
        <l id="s4:l5" met="2" type="+-">Mijn <rhyme label="c" type="f" corresp="#s4:l4">vyanden</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Doen my alle schimp' en <rhyme label="b" type="m" corresp="#s4:l3">spijt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Om dat ick ben neer <rhyme label="a" type="f">gezegen</rhyme></l>
        <l id="s5:l2" met="2" type="+-">En <rhyme label="a" type="f" corresp="#s5:l1">gekregen</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Hebb' soo diepen scheur en <rhyme label="b" type="m">reet</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Dat om die weer toe te <rhyme label="c" type="f">binden</rhyme>,</l>
        <l id="s5:l5" met="2" type="+-">Ick te <rhyme label="c" type="f" corresp="#s5:l4">vinden</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Niemandt hier ontrent en <rhyme label="b" type="m" corresp="#s5:l3">weet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Yeder een komt aen my <rhyme label="a" type="f">rucken</rhyme>,</l>
        <l id="s6:l2" met="2" type="+-">Elck komt <rhyme label="a" type="f" corresp="#s6:l1">plucken</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Elck een van mijn rancken <rhyme label="b" type="m">grijpt</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Elck een nijpt my tot aen 't <rhyme label="c" type="f">herte</rhyme>,</l>
        <l id="s6:l5" met="2" type="+-">'t Welck van <rhyme label="c" type="f" corresp="#s6:l4">smerte</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Als een Kraen en Swaluw' <rhyme label="b" type="m" corresp="#s6:l3">pijpt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Is aen my dan geen <rhyme label="a" type="f">verbeuren</rhyme>,</l>
        <l id="s7:l2" met="2" type="+-">Sal dit <rhyme label="a" type="f" corresp="#s7:l1">scheuren</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Voort-aen altijdt dueren <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Sal het rijten, sal het <rhyme label="c" type="f">kerven</rhyme>,</l>
        <l id="s7:l5" met="2" type="+-">En 't <rhyme label="c" type="f" corresp="#s7:l4">verderven</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Noch niet haest op-houden <rhyme label="b" type="m" corresp="#s7:l3">weer</rhyme>?</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Laet het Heer u eens <rhyme label="a" type="f">verdrieten</rhyme>,</l>
        <l id="s8:l2" met="2" type="+-">Komt eens <rhyme label="a" type="f" corresp="#s8:l1">gieten</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Uwen balsem op mijn <rhyme label="b" type="m">zeer</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Komt 't verscheurde t'samen <rhyme label="c" type="f">hechten</rhyme>,</l>
        <l id="s8:l5" met="2" type="+-">Komt <rhyme label="c" type="f" corresp="#s8:l4">op-rechten</rhyme></l>
        <l id="s8:l6" met="4" type="+-">'t Geen vervallen leyt ter <rhyme label="b" type="m" corresp="#s8:l3">neer</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Vlecht o Godt eens met u <rhyme label="a" type="f">handen</rhyme>,</l>
        <l id="s9:l2" met="2" type="+-">Vredes <rhyme label="a" type="f" corresp="#s9:l1">banden</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Brenght de stucken weer by <rhyme label="b" type="m">een</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Bindtse vast met Liefden <rhyme label="c" type="f">zeelen</rhyme>,</l>
        <l id="s9:l5" met="2" type="+-">Komt my <rhyme label="c" type="f" corresp="#s9:l4">heelen</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">Want het is u werck <rhyme label="b" type="m" corresp="#s9:l3">alleen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Wilt my arbeyts-luyd' <rhyme label="a" type="f">verleenen</rhyme>,</l>
        <l id="s10:l2" met="2" type="+-">Die my <rhyme label="a" type="f" corresp="#s10:l1">meenen</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Die my handt en herte <rhyme label="b" type="m">bien</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">Om 't gebroocken weer te <rhyme label="c" type="f">maecken</rhyme>,</l>
        <l id="s10:l5" met="2" type="+-">En die <rhyme label="c" type="f" corresp="#s10:l4">haecken</rhyme></l>
        <l id="s10:l6" met="4" type="+-">Om mijn wond' geheel te <rhyme label="b" type="m" corresp="#s10:l3">sien</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Stort op mijn oock als een <rhyme label="a" type="f">regen</rhyme></l>
        <l id="s11:l2" met="2" type="+-">Uwen <rhyme label="a" type="f" corresp="#s11:l1">zegen</rhyme>,</l>
        <l id="s11:l3" met="4" type="+-">Watert Heer mijn droogen <rhyme label="b" type="m">grondt</rhyme>,</l>
        <l id="s11:l4" met="4" type="+-">Soo sal ick naer u <rhyme label="c" type="f">behagen</rhyme></l>
        <l id="s11:l5" met="2" type="+-">Vruchten <rhyme label="c" type="f" corresp="#s11:l4">dragen</rhyme></l>
        <l id="s11:l6" met="4" type="+-">Druyven soet in uwen <rhyme label="b" type="m" corresp="#s11:l3">mondt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

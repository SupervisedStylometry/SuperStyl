  <author>Hendrik Rintjes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Ick wil mijnen liefsten <rhyme label="a" type="f">singhen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Een rechtsinnich vriend’lijck <rhyme label="b" type="m">Liedt</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">En van sijnen Wijngaert, <rhyme label="a" type="f" corresp="#s1:l1">dinghen</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Segghen die hem zijn <rhyme label="b" type="m" corresp="#s1:l2">gheschiedt</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Op een Berghsken reed’lijck <rhyme label="c" type="m">hoogh</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Ver van grondt, en schoon in ‘t <rhyme label="c" type="m" corresp="#s1:l5">oogh</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Hadt mijn lief om vreucht <rhyme label="d" type="f">t’oorboren</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">Eenen Wijngaert <rhyme label="d" type="f" corresp="#s1:l7">uyt-verkoren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Dien heeft hy aen alle <rhyme label="a" type="f">kanten</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Vast bemuyrt, ghespit, <rhyme label="b" type="m">ghereet</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">En met rancken doen <rhyme label="a" type="f" corresp="#s2:l1">beplanten</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Van de beste die men <rhyme label="b" type="m" corresp="#s2:l2">weet</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">En heeft eenen Tooren <rhyme label="c" type="m">dicht</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Daer in ‘t midden <rhyme label="c" type="m" corresp="#s2:l5">op-ghericht</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">En een Wijn-Pers met haer <rhyme label="d" type="f">wellen</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">Daer beneffens oock doen <rhyme label="d" type="f" corresp="#s2:l7">stellen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Want hy vastelijck <rhyme label="a" type="f">vertroude</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Dat sijn Wijngaert-plant <rhyme label="b" type="m">ghewis</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Goede Druyven brenghen <rhyme label="a" type="f" corresp="#s3:l1">soude</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Maer voorwaer het sloegh hem <rhyme label="b" type="m" corresp="#s3:l2">mis</rhyme>:</l>
        <l id="s3:l5" met="4" type="-+">Want in steedt van goede <rhyme label="c" type="m">vrucht</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Die hy wachten <rhyme label="c" type="m" corresp="#s3:l5">onbeducht</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Heeft sy, tot sijn groot <rhyme label="d" type="f">mishaghen</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">Wildt en bitter goet <rhyme label="d" type="f" corresp="#s3:l7">ghedraghen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Nu dan, ghy die u <rhyme label="a" type="f">woonstede</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Houdet in <rhyme label="b" type="m">Ierusalem</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Ende die van Iuda <rhyme label="a" type="f" corresp="#s4:l1">mede</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Gheeft hier over uwe <rhyme label="b" type="m" corresp="#s4:l2">stem</rhyme>.</l>
        <l id="s4:l5" met="4" type="-+">Oordeelt ende richtet <rhyme label="c" type="m">ghy</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Tusschen mijnen Bergh en <rhyme label="c" type="m" corresp="#s4:l5">my</rhyme>.</l>
        <l id="s4:l7" met="4" type="-+">Wat kondt ick doen t’sijner <rhyme label="d" type="f">baten</rhyme>,</l>
        <l id="s4:l8" met="4" type="-+">Dat ick hebbe <rhyme label="d" type="f" corresp="#s4:l7">nae-ghelaten</rhyme>?</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Hoe komt, daer ick hadt <rhyme label="a" type="f">verlanghen</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Nae Wijn-Druyven soet en <rhyme label="b" type="m">mildt</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Dat ick daer voor heb <rhyme label="a" type="f" corresp="#s5:l1">ontfanghen</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Bitter Bezijen en <rhyme label="b" type="m" corresp="#s5:l2">wildt</rhyme>.</l>
        <l id="s5:l5" met="4" type="-+">Nu dan wil ick u doen <rhyme label="c" type="m">kondt</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Wat ick mijnen Bergh goet <rhyme label="c" type="m" corresp="#s5:l5">rondt</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Hebb’ in ‘t herte <rhyme label="d" type="f">voorghenomen</rhyme>,</l>
        <l id="s5:l8" met="4" type="-+">Stracx te laten <rhyme label="d" type="f" corresp="#s5:l7">over-komen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Sijnen Tuyn sal ick <rhyme label="a" type="f">uyt-rucken</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Dat men vry weyd’ over <rhyme label="b" type="m">al</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">En sijn Heyningh slaen in <rhyme label="a" type="f" corresp="#s6:l1">stucken</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Datmen hem vertreden <rhyme label="b" type="m" corresp="#s6:l2">sal</rhyme>.</l>
        <l id="s6:l5" met="4" type="-+">Ick sal hem, ghelooft dat <rhyme label="c" type="m">vry</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Maken tot een <rhyme label="c" type="m" corresp="#s6:l5">woesteni</rhyme>:</l>
        <l id="s6:l7" met="4" type="-+">Niemant sal hem voortaen <rhyme label="d" type="f">teelen</rhyme>,</l>
        <l id="s6:l8" met="4" type="-+">Snijden, spitten, noch <rhyme label="d" type="f" corresp="#s6:l7">houweelen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Daer sal voortaen Wijn noch <rhyme label="a" type="f">Koorn</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Wassen, noch gheen eerbaer <rhyme label="b" type="m">fruyt</rhyme>:</l>
        <l id="s7:l3" met="4" type="-+">Daer sal niet dan wilde <rhyme label="a" type="f" corresp="#s7:l1">Doren</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Ende Distels spruyten <rhyme label="b" type="m" corresp="#s7:l2">uyt</rhyme>:</l>
        <l id="s7:l5" met="4" type="-+">En ick sal voorts doen <rhyme label="c" type="m">bevel</rhyme></l>
        <l id="s7:l6" met="4" type="-+">Aen de Locht en Wolcken <rhyme label="c" type="m" corresp="#s7:l5">snel</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">Dat sy tot dees Landes <rhyme label="d" type="f">zeghen</rhyme>,</l>
        <l id="s7:l8" met="4" type="-+">Niet meer gheven haeren <rhyme label="d" type="f" corresp="#s7:l7">reghen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">‘t Volck van Israel <rhyme label="a" type="f">gheboren</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Is des Heeren <rhyme label="b" type="m">Wijngaert-Bergh</rhyme>:</l>
        <l id="s8:l3" met="4" type="-+">En sijn planten <rhyme label="a" type="f" corresp="#s8:l1">uyt-verkoren</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Is ‘t huys Iuda slim en <rhyme label="b" type="m" corresp="#s8:l2">ergh</rhyme>.</l>
        <l id="s8:l5" met="4" type="-+">Sy heeft Recht van hun <rhyme label="c" type="m">verwacht</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Ende daer is roof en <rhyme label="c" type="m" corresp="#s8:l5">kracht</rhyme>.</l>
        <l id="s8:l7" met="4" type="-+">Iae in plaets van ‘t recht <rhyme label="d" type="f">bestieren</rhyme>,</l>
        <l id="s8:l8" met="4" type="-+">Hoortmen schreyen ende <rhyme label="d" type="f" corresp="#s8:l7">tieren</rhyme>.</l>
      </lg>
    </lg>
  </text>

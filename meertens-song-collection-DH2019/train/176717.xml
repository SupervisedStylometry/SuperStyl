    <melody>Naar dat ik heb gelezen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Hendrik Rintjes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Traghe slappe <rhyme label="a" type="f">handen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Ende losse <rhyme label="b" type="m">Knien</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Die men in veel <rhyme label="a" type="f" corresp="#s1:l1">Landen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Menichmael mach <rhyme label="b" type="m" corresp="#s1:l2">sien</rhyme>:</l>
        <l id="s1:l5" met="4" type="+-">Maer als des Heeren knechten  //  <rhyme label="c" type="m">vroet</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Men die weder rechten  //  <rhyme label="c" type="m" corresp="#s1:l5">moet</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Op dat men niet en <rhyme label="d" type="m">sneeft</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">En struyckelinghe <rhyme label="d" type="m" corresp="#s1:l7">heeft</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Luy noch slaperich <rhyme label="a" type="f">wesen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En is geenen <rhyme label="b" type="m">raet</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Maer het wordt seer <rhyme label="a" type="f" corresp="#s2:l1">mispresen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Doende sulcke <rhyme label="b" type="m" corresp="#s2:l2">daet</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Die also bevonden  //  <rhyme label="c" type="m">wert</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Slaperich in zonden  //  <rhyme label="c" type="m" corresp="#s2:l5">teer</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Voor die hier niet en <rhyme label="d" type="m">waeckt</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Des Heeren straffe <rhyme label="d" type="m" corresp="#s2:l7">naeckt</rhyme>,</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Wy vinden van Vijf <rhyme label="a" type="f">Maechden</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">En die waren <rhyme label="b" type="m">Dwaes</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Die Godt niet en <rhyme label="a" type="f" corresp="#s3:l1">behaechden</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Door ‘t slaperich <rhyme label="b" type="m" corresp="#s3:l2">solaes</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Quaemen met ydel vaten  //  <rhyme label="c" type="m">daer</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Waer deure sy vergaten  //  <rhyme label="c" type="m" corresp="#s3:l5">haer</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Van te komen <rhyme label="d" type="m">in</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">‘t Was niet des Bruydegoms <rhyme label="d" type="m" corresp="#s3:l7">sin</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Hieromme laet ons <rhyme label="a" type="f">waken</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En nuchteren <rhyme label="b" type="m">staen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Dat wy in allen <rhyme label="a" type="f" corresp="#s4:l1">saken</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Als Wijse Maechden <rhyme label="b" type="m" corresp="#s4:l2">gaen</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Sy waren met Lampen cierigh  //  <rhyme label="c" type="m">fijn</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Die hier nu so vyerich  //  <rhyme label="c" type="m" corresp="#s4:l5">zijn</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">In desen laetsten <rhyme label="d" type="m">tijdt</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Werden oock so <rhyme label="d" type="m" corresp="#s4:l7">verblijdt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Sy waren <rhyme label="a" type="f">inghelaten</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">In die schoone <rhyme label="b" type="m">Stadt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Daer Gouden zijn de <rhyme label="a" type="f" corresp="#s5:l1">Straten</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Noyt kostelijcker <rhyme label="b" type="m" corresp="#s5:l2">Padt</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Dat gheen licht ghebreken  //  <rhyme label="c" type="m">sal</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Seer cierlijck gheleken  //  <rhyme label="c" type="m" corresp="#s5:l5">al</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">By Peerlen ende <rhyme label="d" type="m">Gout</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Verciert seer <rhyme label="d" type="m" corresp="#s5:l7">menighfout</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Om komen in dit <rhyme label="a" type="f">Rijcke</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Moet men gheweldt <rhyme label="b" type="m">doen</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">En verwinnen <rhyme label="a" type="f" corresp="#s6:l1">Publijcke</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Al sijn Vyanden <rhyme label="b" type="m" corresp="#s6:l2">koen</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Hoe vleesch en Bloet hier teghem  //  <rhyme label="c" type="m">strijdt</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Schouwen moet men sijn weghen  //  <rhyme label="c" type="m" corresp="#s6:l5">wijdt</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Ende door d’Enghen <rhyme label="d" type="m">padt</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Trecken nae Zyons <rhyme label="d" type="m" corresp="#s6:l7">Stadt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Wat doet hier menigh <rhyme label="a" type="f">pijne</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Om ‘t Rijck dat <rhyme label="b" type="m">vergaet</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">En soeckt rijcke te <rhyme label="a" type="f" corresp="#s7:l1">zijne</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Door des Voleeschs kloecke <rhyme label="b" type="m" corresp="#s7:l2">daet</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Oft so waer ons labueren  //  <rhyme label="c" type="m">al</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Om dat eeuwigh ghedueren  //  <rhyme label="c" type="m" corresp="#s7:l5">sal</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Wat souyde door sulck <rhyme label="d" type="m">licht</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Menigh worden <rhyme label="d" type="m" corresp="#s7:l7">ghestight</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Maer ick vreese al <rhyme label="a" type="f">mede</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">(So ervarentheyt <rhyme label="b" type="m">leert</rhyme>)</l>
        <l id="s8:l3" met="3" type="-+">Dat ‘t licht in <rhyme label="a" type="f" corresp="#s8:l1">duysterhede</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">By sommighe <rhyme label="b" type="m" corresp="#s8:l2">verkeert</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Die hebben onversweghen  //  <rhyme label="c" type="m">suyr</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Een wortele verkreghen  //  <rhyme label="c" type="m" corresp="#s8:l5">suyr</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Waer door (so daet <rhyme label="d" type="m">bewijst</rhyme>)</l>
        <l id="s8:l8" met="3" type="-+">Een verwerringe <rhyme label="d" type="m" corresp="#s8:l7">rijst</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Daer uyt (magh men wel <rhyme label="a" type="f">dincken</rhyme>)</l>
        <l id="s9:l2" met="3" type="-+">‘t Goede voornemen <rhyme label="b" type="m">faelt</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Wiens ghemoet begint <rhyme label="a" type="f" corresp="#s9:l1">sincken</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Dat vyerigh was <rhyme label="b" type="m" corresp="#s9:l2">door-straelt</rhyme>,</l>
        <l id="s9:l5" met="4" type="+-">Iae die door des Gheests laven  //  <rhyme label="c" type="m">soet</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">Ghesmaeckt hadde Gods gaven  //  <rhyme label="c" type="m" corresp="#s9:l5">goet</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">‘t Komt wel dat hy ‘t <rhyme label="d" type="m">verliest</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Ende wat anders <rhyme label="d" type="m" corresp="#s9:l7">kiest</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Dan willen sy ‘t <rhyme label="a" type="f">bedecken</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Met een kranck <rhyme label="b" type="m">Vijghe-bladt</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">En vele vuyle <rhyme label="a" type="f" corresp="#s10:l1">vlecken</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Met eenen verbloemen <rhyme label="b" type="m" corresp="#s10:l2">wat</rhyme>,</l>
        <l id="s10:l5" met="4" type="+-">‘t Schijt dat sy sonder sneven  //  <rhyme label="c" type="m">net</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">Noch anders willen leven  //  <rhyme label="c" type="m" corresp="#s10:l5">bet</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Door eenen valschen <rhyme label="d" type="m">vont</rhyme>,</l>
        <l id="s10:l8" met="3" type="-+">Al op een ander <rhyme label="d" type="m" corresp="#s10:l7">gront</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Den grondt (door Godts <rhyme label="a" type="f">ghenade</rhyme>)</l>
        <l id="s11:l2" met="3" type="-+">Is van Paulo <rhyme label="b" type="m">gheleyt</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Elck wachte hem voor <rhyme label="a" type="f" corresp="#s11:l1">schade</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">In ‘t Timmerens <rhyme label="b" type="m" corresp="#s11:l2">arbeyt</rhyme>,</l>
        <l id="s11:l5" met="4" type="+-">Dat ‘t werck tot gheenen stonden  //  <rhyme label="c" type="m">vry</rhyme>,</l>
        <l id="s11:l6" met="4" type="+-">Hout, hoy, noch stoppels vonden  //  <rhyme label="c" type="m" corresp="#s11:l5">zy</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">‘t Welck met swaer <rhyme label="d" type="m">dangier</rhyme>,</l>
        <l id="s11:l8" met="3" type="-+">Verbrant sal zijn in ‘t <rhyme label="d" type="m" corresp="#s11:l7">vyer</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Hieromme wilt niet <rhyme label="a" type="f">slapen</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Want Sathan niet en <rhyme label="b" type="m">viert</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Maer als trouwe <rhyme label="a" type="f" corresp="#s12:l1">slacht-Schapen</rhyme></l>
        <l id="s12:l4" met="3" type="-+">U wijs-Maeghdigh <rhyme label="b" type="m" corresp="#s12:l2">verciert</rhyme>,</l>
        <l id="s12:l5" met="4" type="+-">Dat u naemaels des Heeren  //  <rhyme label="c" type="m">dagh</rhyme></l>
        <l id="s12:l6" met="4" type="+-">Niet brenghen in ‘t verseeren  //  <rhyme label="c" type="m" corresp="#s12:l5">mach</rhyme>,</l>
        <l id="s12:l7" met="3" type="-+">Waeckt dan ende <rhyme label="d" type="m">bidt</rhyme>,</l>
        <l id="s12:l8" met="3" type="-+">Op dat ghy ‘t al <rhyme label="d" type="m" corresp="#s12:l7">besit</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">De knecht die ‘s Heeren <rhyme label="a" type="f">komste</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Niet en heeft <rhyme label="b" type="m">verwacht</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Wert (eylaes) met <rhyme label="a" type="f" corresp="#s13:l1">d’onvromste</rhyme></l>
        <l id="s13:l4" met="3" type="-+">In den af-grondt <rhyme label="b" type="m" corresp="#s13:l2">versmacht</rhyme>,</l>
        <l id="s13:l5" met="4" type="+-">Waer deure hy moet een fijne  //  <rhyme label="c" type="m">leedt</rhyme>,</l>
        <l id="s13:l6" met="4" type="+-">Ende lach in ‘s doodts pijne  //  <rhyme label="c" type="m" corresp="#s13:l5">wreedt</rhyme></l>
        <l id="s13:l7" met="3" type="-+">Dit is alsoo <rhyme label="d" type="m">gheschiet</rhyme>,</l>
        <l id="s13:l8" met="3" type="-+">Om dat hy waeckte <rhyme label="d" type="m" corresp="#s13:l7">niet</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Hierom zijt in de <rhyme label="a" type="f">wachte</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">T’allen tijden <rhyme label="b" type="m">bereedt</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">By daghe en by <rhyme label="a" type="f" corresp="#s14:l1">nachte</rhyme></l>
        <l id="s14:l4" met="3" type="-+">Verciert met ‘t Bruylofts <rhyme label="b" type="m" corresp="#s14:l2">kleedt</rhyme>,</l>
        <l id="s14:l5" met="4" type="+-">Op dat ghy dan hooren  //  <rhyme label="c" type="m">meucht</rhyme>,</l>
        <l id="s14:l6" met="4" type="+-">Komt gy wilt orbooren  //  <rhyme label="c" type="m" corresp="#s14:l5">vreucht</rhyme>,</l>
        <l id="s14:l7" met="3" type="-+">In mijns Vaders <rhyme label="d" type="m">throon</rhyme>,</l>
        <l id="s14:l8" met="3" type="-+">Voor u bereydt seer <rhyme label="d" type="m" corresp="#s14:l7">schoon</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Die dit Liedeken <rhyme label="a" type="f">stelde</rhyme>,</l>
        <l id="s15:l2" met="3" type="-+">Is menighmael <rhyme label="b" type="m">beswaert</rhyme>,</l>
        <l id="s15:l3" met="3" type="-+">Den slaep hem oock wel <rhyme label="a" type="f" corresp="#s15:l1">quelde</rhyme>,</l>
        <l id="s15:l4" met="3" type="-+">Want het is des vleeschs <rhyme label="b" type="m" corresp="#s15:l2">aert</rhyme>:</l>
        <l id="s15:l5" met="4" type="+-">Biddet tot Godt <rhyme label="c" type="m">ghestadelijck</rhyme>,</l>
        <l id="s15:l6" met="4" type="+-">Dat hy hem helpt <rhyme label="c" type="m" corresp="#s15:l5">ghenadelijck</rhyme>,</l>
        <l id="s15:l7" met="3" type="-+">In al dat hy <rhyme label="d" type="m">begint</rhyme>,</l>
        <l id="s15:l8" met="3" type="-+">Der zonden slaep <rhyme label="d" type="m" corresp="#s15:l7">verwint</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

    <melody>Het zat een sneeuwwit vogeltje</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Jan Jansz. Deutel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ICk wil den Heere <rhyme label="a" type="m">ghebenedijt</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Loven prijsen tot allen <rhyme label="b" type="f">stonde</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Sijnen lof sal ick tot aller <rhyme label="a" type="m" corresp="#s1:l1">tijdt</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Wt spreken vry met mijnen <rhyme label="b" type="f" corresp="#s1:l2">monde</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Mijn ziele sal van den Heere <rhyme label="a" type="m">groot</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Haer seer hoochelijck <rhyme label="b" type="f">beroemen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Soo dat die 't hooren, zijnde in <rhyme label="a" type="m" corresp="#s2:l1">noot</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Blijdtschap en vreught daer af sal <rhyme label="b" type="f" corresp="#s2:l2">komen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Laet ons den Heere met groot <rhyme label="a" type="m">ootmoet</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Loven end' prijsen al te <rhyme label="b" type="f">samen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Hooghe verheffen sijn name <rhyme label="a" type="m" corresp="#s3:l1">soet</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Hy gaet te boven alle <rhyme label="b" type="f" corresp="#s3:l2">namen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Wanneer ick den Heere sochte <rhyme label="a" type="m">siet</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Antwoordende sprack hy seer <rhyme label="b" type="f">sachte</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">End' hielp my uyt vreese end' <rhyme label="a" type="m" corresp="#s4:l1">verdriet</rhyme></l>
        <l id="s4:l4" met="3" type="-+">door sijnen gheest die in my <rhyme label="b" type="f" corresp="#s4:l2">wrachte</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Alle menschen die op hem <rhyme label="a" type="m">sien</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Sal hy seer wonderlijck <rhyme label="b" type="f">verlichten</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Gheen schande sal haer mogen <rhyme label="a" type="m" corresp="#s5:l1">geschien</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">'Twerdt al goet en recht wat sy <rhyme label="b" type="f" corresp="#s5:l2">stichten</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Doen den ellendigen mensche <rhyme label="a" type="m">riep</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">De Heere sijn stemmen <rhyme label="b" type="f">verhoorde</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">En hielp hem uyt sijn lijden <rhyme label="a" type="m" corresp="#s6:l1">diep</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Vertroostende met sijnen <rhyme label="b" type="f" corresp="#s6:l2">woorde</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">De Enghel des Heeren Legher <rhyme label="a" type="m">maeckt</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Rontom die hem vreesen en <rhyme label="b" type="f">eeren</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Hy helptse uyt noot ende hy <rhyme label="a" type="m" corresp="#s7:l1">waeckt</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Voor menschen die Godts lof <rhyme label="b" type="f" corresp="#s7:l2">vermeeren</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Wilt smaken en met oogen <rhyme label="a" type="m">aenschout</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Hoe vriendelijck dat is de <rhyme label="b" type="f">Heere</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Wel den mensche die op hem <rhyme label="a" type="m" corresp="#s8:l1">betrout</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">End' van hem scheyt <rhyme label="b" type="f" corresp="#s8:l2">nimmermeere</rhyme>?</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Vreest hem ghy sijne heyligen <rhyme label="a" type="m">al</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Want die hem vreesen en <rhyme label="b" type="f">beminnen</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Gheen ghebreck haer overvallen <rhyme label="a" type="m" corresp="#s9:l1">sal</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Noch gheen ghewelt salse <rhyme label="b" type="f" corresp="#s9:l2">verwinnen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">De rijcke hongert en lijt <rhyme label="a" type="m">gebreck</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Maer die den Heere neerstigh <rhyme label="b" type="f">soecken</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Worden geholpen uyt allen <rhyme label="a" type="m" corresp="#s10:l1">dreck</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Bevrijdt van schaed' in allen <rhyme label="b" type="f" corresp="#s10:l2">hoecken</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Komt herwaerts kinders hoort na <rhyme label="a" type="m">my</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">de vreese Godts sal ick u <rhyme label="b" type="f">leeren</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Al die begheeren te leven <rhyme label="a" type="m" corresp="#s11:l1">vry</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Gherust van herten en met <rhyme label="b" type="f" corresp="#s11:l2">eeren</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Behoedt u tonghe voor alle <rhyme label="a" type="m">quaet</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Maeckt dat u lippen niet en <rhyme label="b" type="f">spreken</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Eenigh bedrogh of valschen <rhyme label="a" type="m" corresp="#s12:l1">raedt</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">D'welck doet den bandt der liefden <rhyme label="b" type="f" corresp="#s12:l2">breken</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Laet af van't quade en doet dat <rhyme label="a" type="m">goedt</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Soeckt vrede en wiltse <rhyme label="b" type="f">vermeeren</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Want soo wie dat gerechtigheyt <rhyme label="a" type="m" corresp="#s13:l1">doet</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Op hem sien de oogen des <rhyme label="b" type="f" corresp="#s13:l2">Heeren</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Ende sijn ooren oock open <rhyme label="a" type="m">staen</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Om sijn bedinghe te <rhyme label="b" type="f">ontfanghen</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Maer met den quaden sal't anders <rhyme label="a" type="m" corresp="#s14:l1">gaen</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">Die de boosheydt altijdt <rhyme label="b" type="f" corresp="#s14:l2">aenhangen</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Want seer vreeslijck sal Godts <rhyme label="a" type="m">aenschijn</rhyme></l>
        <l id="s15:l2" met="3" type="-+">Aensien den boosen, en <rhyme label="b" type="f">uytroeyen</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">Soo dat nu noch op geenen <rhyme label="a" type="m" corresp="#s15:l1">termijn</rhyme>,</l>
        <l id="s15:l4" met="3" type="-+">Haer gedachtenisse sal <rhyme label="b" type="f" corresp="#s15:l2">groeyen</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Als die oprechte roept, Godt die <rhyme label="a" type="m">hoort</rhyme>,</l>
        <l id="s16:l2" met="3" type="-+">En verlost hem uyt sijn <rhyme label="b" type="f">ellende</rhyme>,</l>
        <l id="s16:l3" met="4" type="-+">door sijn genade met goet <rhyme label="a" type="m" corresp="#s16:l1">accoort</rhyme></l>
        <l id="s16:l4" met="3" type="-+">Maeckt hy sijn lijden een goedt <rhyme label="b" type="f" corresp="#s16:l2">ende</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Die Heere is den mensche nae <rhyme label="a" type="m">by</rhyme></l>
        <l id="s17:l2" met="3" type="-+">Al die gebroken zijn van <rhyme label="b" type="f">herten</rhyme>,</l>
        <l id="s17:l3" met="4" type="-+">Ende den sachtmoedigen helpt <rhyme label="a" type="m" corresp="#s17:l1">hy</rhyme></l>
        <l id="s17:l4" met="3" type="-+">Wt anghst, noot, lijden ende <rhyme label="b" type="f" corresp="#s17:l2">smerten</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Den rechtveerdigen seer vele <rhyme label="a" type="m">hert</rhyme>,</l>
        <l id="s18:l2" met="3" type="-+">Maer Godt bevrijt hem van <rhyme label="b" type="f">misvalle</rhyme>,</l>
        <l id="s18:l3" met="4" type="-+">Soo datter niet een ghebroken <rhyme label="a" type="m" corresp="#s18:l1">werdt</rhyme>,</l>
        <l id="s18:l4" met="3" type="-+">Van sijndere ghebeenten <rhyme label="b" type="f" corresp="#s18:l2">alle</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">D'ongheluck sal doo'n den boosen <rhyme label="a" type="m">man</rhyme>,</l>
        <l id="s19:l2" met="3" type="-+">En al die den gherechten <rhyme label="b" type="f">haten</rhyme></l>
        <l id="s19:l3" met="4" type="-+">Sullen haer beschuldighen daer <rhyme label="a" type="m" corresp="#s19:l1">an</rhyme>,</l>
        <l id="s19:l4" met="3" type="-+">Hoe hooghe dat sy zijn van <rhyme label="b" type="f" corresp="#s19:l2">staten</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">Godt die verlost uyt alle <rhyme label="a" type="m">ghepijn</rhyme></l>
        <l id="s20:l2" met="3" type="-+">De zielen van alle sijn <rhyme label="b" type="f">knechten</rhyme>,</l>
        <l id="s20:l3" met="4" type="-+">En die op hem betrouwende <rhyme label="a" type="m" corresp="#s20:l1">zijn</rhyme>,</l>
        <l id="s20:l4" met="3" type="-+">Sal hy ghenadelijcke <rhyme label="b" type="f" corresp="#s20:l2">rechten</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">EN wilt togh niet <rhyme label="a" type="f">bedelven</rhyme></l>
        <l id="s1:l2" met="3" type="-+">In d'Aerde uwe <rhyme label="b" type="m">schatt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Alwaer se by haer <rhyme label="a" type="f" corresp="#s1:l1">selven</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Bederft door roest en <rhyme label="b" type="m" corresp="#s1:l2">matt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Alwaer de loose <rhyme label="a" type="f">Dieven</rhyme></l>
        <l id="s2:l2" met="3" type="-+">By onty graven <rhyme label="b" type="m">gaen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">En dan na haer <rhyme label="a" type="f" corresp="#s2:l1">believen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Het neemen daer van <rhyme label="b" type="m" corresp="#s2:l2">daen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Uw' schatten leght <rhyme label="a" type="f">verhoolen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">In 's Hemels goedt <rhyme label="b" type="m">bewaer</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Dan werden s' niet <rhyme label="a" type="f" corresp="#s3:l1">gestoolen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Of niet bedorven <rhyme label="b" type="m" corresp="#s3:l2">daer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Want waer dat leydt <rhyme label="a" type="f">begraven</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Of waer uw schatte <rhyme label="b" type="m">rust</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Daer wilt ook heenen <rhyme label="a" type="f" corresp="#s4:l1">draven</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Geheel uw 's harten <rhyme label="b" type="m" corresp="#s4:l2">lust</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Is 't dat uw oogh <rhyme label="a" type="f">bequame</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Reght en eenvoudigh <rhyme label="b" type="m">siet</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Soo is 't dat uw' <rhyme label="a" type="f" corresp="#s5:l1">lichame</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Ook heel het Licht <rhyme label="b" type="m" corresp="#s5:l2">geniet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Is 't dat boos is uw <rhyme label="a" type="f">ooge</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">'t Heel lichaem duyster <rhyme label="b" type="m">is</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Als selfs het Licht niet <rhyme label="a" type="f" corresp="#s6:l1">dooge</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Wat sal de <rhyme label="b" type="m" corresp="#s6:l2">duysternis</rhyme>?</l>
      </lg>
    </lg>
  </text>

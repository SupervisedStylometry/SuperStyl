      <category translation="religion">godsdienst</category>
    </categories>
  <author>Albertus Buitendyck</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ALs na het Nat de <rhyme label="a" type="m">Vis</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Mijn Hart genegen <rhyme label="a" type="m" corresp="#s1:l1">is</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Om mijne Ziel te <rhyme label="b" type="f">spijsen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Met Iesus Vlees en <rhyme label="c" type="m">Bloet</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Tot Godes eer 't sal <rhyme label="b" type="f" corresp="#s1:l3">wijsen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Dat Iesus ons dat <rhyme label="c" type="m" corresp="#s1:l4">doet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">'t Geluck van 't <rhyme label="a" type="m">Paradijs</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Door den verboden <rhyme label="a" type="m" corresp="#s2:l1">spijs</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Hebben wy al <rhyme label="b" type="f">verloren</rhyme>;</l>
        <l id="s2:l4" met="3" type="-+">Geraeckt zijn in <rhyme label="c" type="m">ellent</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Iesus hierom <rhyme label="b" type="f" corresp="#s2:l3">verkoren</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Heeft, 't H. <rhyme label="c" type="m" corresp="#s2:l4">Sacrament</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Iesus, die heeft <rhyme label="a" type="m">voorseyt</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Met goedt en vast <rhyme label="a" type="m" corresp="#s3:l1">bescheyt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Mijn Vleesch sal ick u <rhyme label="b" type="f">geven</rhyme>:</l>
        <l id="s3:l4" met="3" type="-+">d'Euangelisten <rhyme label="c" type="m">dat</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Hebben 't al klaer <rhyme label="b" type="f" corresp="#s3:l3">beschreven</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Met 't uyt-verkooren <rhyme label="c" type="m" corresp="#s3:l4">Vat</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Jesus sijn <rhyme label="a" type="m">Avontmael</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Instelden op een <rhyme label="a" type="m" corresp="#s4:l1">Sael</rhyme>.</l>
        <l id="s4:l3" met="3" type="-+">Sprack: Dit is mijn <rhyme label="b" type="f">Lichame</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Dat voor u Lieden <rhyme label="c" type="m">al</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Gelijck het sal <rhyme label="b" type="f" corresp="#s4:l3">betame</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Gelevert worden <rhyme label="c" type="m" corresp="#s4:l4">sal</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Iesus ons alle <rhyme label="a" type="m">leert</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Wiens woorden acht en <rhyme label="a" type="m" corresp="#s5:l1">eert</rhyme>:</l>
        <l id="s5:l3" met="3" type="-+">Mijn Vlees, is waerlijck <rhyme label="b" type="f">Spijse</rhyme>:</l>
        <l id="s5:l4" met="3" type="-+">Mijn Bloet, is waerlijck <rhyme label="c" type="m">Dranck</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Wilt den Heer hierom <rhyme label="b" type="f" corresp="#s5:l3">prijsen</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Soo ghy gesont, als <rhyme label="c" type="m" corresp="#s5:l4">kranck</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Jesus in 't <rhyme label="a" type="m">Sacrament</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Is waerlijck heel <rhyme label="a" type="m" corresp="#s6:l1">present</rhyme>:</l>
        <l id="s6:l3" met="3" type="-+">De Vaders van <rhyme label="b" type="f">d'outhede</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Leerent eendrachtigh <rhyme label="c" type="m">al</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Wilt dit gelooven <rhyme label="b" type="f" corresp="#s6:l3">mede</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Of ghy zijt dwaes, en <rhyme label="c" type="m" corresp="#s6:l4">mal</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Ey! antwoort liefste <rhyme label="a" type="m">Vrint</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Soo ghy waerheyt <rhyme label="a" type="m" corresp="#s7:l1">bemint</rhyme>?</l>
        <l id="s7:l3" met="3" type="-+">Heeft aen het Kruys <rhyme label="b" type="f">gehangen</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Broot, of <rhyme label="c" type="m">gelijckenis</rhyme>?</l>
        <l id="s7:l5" met="3" type="-+">Secht neen, maer die <rhyme label="b" type="f" corresp="#s7:l3">gevangen</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Voor onse Sondaers <rhyme label="c" type="m" corresp="#s7:l4">is</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Al schijnt 't te zijn maer <rhyme label="a" type="m">Broodt</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Daer aen u niet en <rhyme label="a" type="m" corresp="#s8:l1">stoot</rhyme>.</l>
        <l id="s8:l3" met="3" type="-+">Reuck, ende smaeck, hier <rhyme label="b" type="f">doolen</rhyme>:</l>
        <l id="s8:l4" met="3" type="-+">'t Gevoelen, en 't <rhyme label="c" type="m">gesicht</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">'t Geloof wordt ons <rhyme label="b" type="f" corresp="#s8:l3">bevoolen</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Dat de Schriftuer <rhyme label="c" type="m" corresp="#s8:l4">verlicht</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Seght niet Godt heeft geen <rhyme label="a" type="m">kracht</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Seght niet Godt heeft geen <rhyme label="a" type="m" corresp="#s9:l1">macht</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Dat souw konne <rhyme label="b" type="f">geschieden</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Dat Broodt souw worden <rhyme label="c" type="m">Vleesch</rhyme>.</l>
        <l id="s9:l5" met="3" type="-+">Godt duysternis <rhyme label="b" type="f" corresp="#s9:l3">gebieden</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Seyt: wort licht, 't licht <rhyme label="c" type="m" corresp="#s9:l4">verrees</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Uyt d'Aerde Adam <rhyme label="a" type="m">maeckt</rhyme>:</l>
        <l id="s10:l2" met="3" type="-+">Uyt Adams rib Iif <rhyme label="a" type="m" corresp="#s10:l1">raeckt</rhyme>.</l>
        <l id="s10:l3" met="3" type="-+">Kan verand'ren, en <rhyme label="b" type="f">maecken</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Al, na sijn wil en <rhyme label="c" type="m">wensch</rhyme>;</l>
        <l id="s10:l5" met="3" type="-+">Al kan 't verstandt niet <rhyme label="b" type="f" corresp="#s10:l3">raecken</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Van d'alder-gauste <rhyme label="c" type="m" corresp="#s10:l4">Mensch</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Yemant belooft u <rhyme label="a" type="m">Landt</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">En geeft Notaris <rhyme label="a" type="m" corresp="#s11:l1">hant</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Om liefde te <rhyme label="b" type="f">betoonen</rhyme>;</l>
        <l id="s11:l4" met="3" type="-+">Maer geeft een <rhyme label="c" type="m">Schildery</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Soudt ghy dese <rhyme label="b" type="f" corresp="#s11:l3">verschoonen</rhyme></l>
        <l id="s11:l6" met="3" type="-+">Van groote <rhyme label="c" type="m" corresp="#s11:l4">schelmery</rhyme>?</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Ruyckt ghy, ruyckt ghy geen <rhyme label="a" type="m">londt</rhyme>;</l>
        <l id="s12:l2" met="3" type="-+">Dit is Calvinus <rhyme label="a" type="m" corresp="#s12:l1">vont</rhyme>.</l>
        <l id="s12:l3" met="3" type="-+">De Pylaers van sijn <rhyme label="b" type="f">Kercke</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Te geven een teugh <rhyme label="c" type="m">Wijn</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">En Broodt: Maer haer <rhyme label="b" type="f" corresp="#s12:l3">verstercke</rhyme></l>
        <l id="s12:l6" met="3" type="-+">Moet Iesus doodt en <rhyme label="c" type="m" corresp="#s12:l4">pijn</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Sy apen na het <rhyme label="a" type="m">Spel</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Van <rhyme label="a" type="m" corresp="#s13:l1">Heliogabel</rhyme>;</l>
        <l id="s13:l3" met="3" type="-+">Hy liet setten sijn <rhyme label="b" type="f">Vrinden</rhyme></l>
        <l id="s13:l4" met="3" type="-+">Aen eenen Disch <rhyme label="c" type="m">bereyt</rhyme>:</l>
        <l id="s13:l5" met="3" type="-+">Maer niet als dranck sy <rhyme label="b" type="f" corresp="#s13:l3">vinden</rhyme>,</l>
        <l id="s13:l6" met="3" type="-+">En Spijs, <rhyme label="c" type="m" corresp="#s13:l4">geconterfeyt</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Seght niet 't geloof my <rhyme label="a" type="m">spijst</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Als mijne Ziel <rhyme label="a" type="m" corresp="#s14:l1">op-rijst</rhyme>;</l>
        <l id="s14:l3" met="3" type="-+">Iesus doet my <rhyme label="b" type="f">versaden</rhyme></l>
        <l id="s14:l4" met="3" type="-+">Door sijn Vleesch ende <rhyme label="c" type="m">Bloedt</rhyme>;</l>
        <l id="s14:l5" met="3" type="-+">Hier door krijgh ick <rhyme label="b" type="f" corresp="#s14:l3">genaden</rhyme>,</l>
        <l id="s14:l6" met="3" type="-+">Soo ick gelooven <rhyme label="c" type="m" corresp="#s14:l4">moet</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">U lichaem blijft hier <rhyme label="a" type="m">neer</rhyme>,</l>
        <l id="s15:l2" met="3" type="-+">Hoe ist by Godt den <rhyme label="a" type="m" corresp="#s15:l1">Heer</rhyme>?</l>
        <l id="s15:l3" met="3" type="-+">Hoe kont ghy by hem <rhyme label="b" type="f">wesen</rhyme>?</l>
        <l id="s15:l4" met="3" type="-+">Hoe kont ghy hem <rhyme label="c" type="m">ontfaen</rhyme>?</l>
        <l id="s15:l5" met="3" type="-+">Of ghy moet zijn <rhyme label="b" type="f" corresp="#s15:l3">verresen</rhyme>;</l>
        <l id="s15:l6" met="3" type="-+">Tot d'Hemel moet ghy <rhyme label="c" type="m" corresp="#s15:l4">gaen</rhyme>!</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="3" type="-+">Hier blijckt u dwaesheyt <rhyme label="a" type="m">aen</rhyme>;</l>
        <l id="s16:l2" met="3" type="-+">Of ghy moet my <rhyme label="a" type="m" corresp="#s16:l1">toe-staen</rhyme>,</l>
        <l id="s16:l3" met="3" type="-+">Dat ghy zijt van meer <rhyme label="b" type="f">krachten</rhyme></l>
        <l id="s16:l4" met="3" type="-+">Als uwe Godt en <rhyme label="c" type="m">Al</rhyme>:</l>
        <l id="s16:l5" met="3" type="-+">Ghy seght, d'Heer niet kan <rhyme label="b" type="f" corresp="#s16:l3">wachten</rhyme></l>
        <l id="s16:l6" met="3" type="-+">d' Hemel en d'Aerdsche <rhyme label="c" type="m" corresp="#s16:l4">dal</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="3" type="-+">Verlaet dit Sathans <rhyme label="a" type="m">soch</rhyme>,</l>
        <l id="s17:l2" met="3" type="-+">Verlaet dit vuyl <rhyme label="a" type="m" corresp="#s17:l1">bedroch</rhyme>.</l>
        <l id="s17:l3" met="3" type="-+">Op u sinnen niet <rhyme label="b" type="f">bouwen</rhyme></l>
        <l id="s17:l4" met="3" type="-+">Wilt, als een dwaes op t' <rhyme label="c" type="m">Sant</rhyme>,</l>
        <l id="s17:l5" met="3" type="-+">Of eeuwigh sal 't u <rhyme label="b" type="f" corresp="#s17:l3">rouwen</rhyme>:</l>
        <l id="s17:l6" met="3" type="-+">Maer bouwt op steenen <rhyme label="c" type="m" corresp="#s17:l4">kant</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="3" type="-+">Geen broodt kan storte <rhyme label="a" type="m">bloedt</rhyme>,</l>
        <l id="s18:l2" met="3" type="-+">Geen broodt voor ons <rhyme label="a" type="m" corresp="#s18:l1">voldoet</rhyme>.</l>
        <l id="s18:l3" met="3" type="-+">Het bloedt aen 't kruys <rhyme label="b" type="f">vergoten</rhyme>,</l>
        <l id="s18:l4" met="3" type="-+">'t Vleesch dat geleden <rhyme label="c" type="m">heeft</rhyme></l>
        <l id="s18:l5" met="3" type="-+">Ons, onder schijn <rhyme label="b" type="f" corresp="#s18:l3">besloten</rhyme></l>
        <l id="s18:l6" met="3" type="-+">Van broot de Priester <rhyme label="c" type="m" corresp="#s18:l4">geeft</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="3" type="-+">O vroome <rhyme label="a" type="m">Catholijck</rhyme>!</l>
        <l id="s19:l2" met="3" type="-+">Bemint ghy 't <rhyme label="a" type="m" corresp="#s19:l1">Hemelrijck</rhyme>:</l>
        <l id="s19:l3" met="3" type="-+">Soo moet ghy dit <rhyme label="b" type="f">gelooven</rhyme>:</l>
        <l id="s19:l4" met="3" type="-+">d' Heer is in 't <rhyme label="c" type="m">Sacrament</rhyme>,</l>
        <l id="s19:l5" met="3" type="-+">Als in den hemel <rhyme label="b" type="f" corresp="#s19:l3">boven</rhyme>,</l>
        <l id="s19:l6" met="3" type="-+">Geheel en <rhyme label="c" type="m" corresp="#s19:l4">ongeschent</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="3" type="-+">Geeft eer u Godt en <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s20:l2" met="3" type="-+">Voor 't Sacrament val <rhyme label="a" type="m" corresp="#s20:l1">neer</rhyme>,</l>
        <l id="s20:l3" met="3" type="-+">Met harten, en u <rhyme label="b" type="f">knielen</rhyme>:</l>
        <l id="s20:l4" met="3" type="-+">Looft hem om dit <rhyme label="c" type="m">weldaet</rhyme>,</l>
        <l id="s20:l5" met="3" type="-+">Dat hy spijst uwe <rhyme label="b" type="f" corresp="#s20:l3">Zielen</rhyme>,</l>
        <l id="s20:l6" met="3" type="-+">Als ghy ter hoogh-tijdt <rhyme label="c" type="m" corresp="#s20:l4">gaet</rhyme>.</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="3" type="-+">Iesu, ons waerde <rhyme label="a" type="m">schat</rhyme>,</l>
        <l id="s21:l2" met="3" type="-+">Ghy maeckt van ons u <rhyme label="a" type="m" corresp="#s21:l1">Stadt</rhyme>,</l>
        <l id="s21:l3" met="3" type="-+">Als ghy in ons komt <rhyme label="b" type="f">woonen</rhyme></l>
        <l id="s21:l4" met="3" type="-+">Met u Vleesch ende <rhyme label="c" type="m">Bloedt</rhyme>:</l>
        <l id="s21:l5" met="3" type="-+">Dit meer als Konincx <rhyme label="b" type="f" corresp="#s21:l3">kroonen</rhyme></l>
        <l id="s21:l6" met="3" type="-+">Ick acht, en al haer <rhyme label="c" type="m" corresp="#s21:l4">goet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

      <category translation="religion">godsdienst</category>
    </categories>
  <author>Philips van Marnix van Sint Aldegonde</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">SIngt met hertzen <rhyme label="a" type="m">vreugt</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">Tlof Gods onses <rhyme label="b" type="f">Heeren</rhyme>,</l>
        <l id="s1:l3" met="3" type="+-">Onse sterckt end <rhyme label="a" type="m" corresp="#s1:l1">deught</rhyme>.</l>
        <l id="s1:l4" met="3" type="+-">Lofsingt claer end <rhyme label="c" type="m">hel</rhyme>,</l>
        <l id="s1:l5" met="3" type="+-">God van <rhyme label="c" type="m" corresp="#s1:l4">Israel</rhyme></l>
        <l id="s1:l6" met="3" type="+-">juycht tot sijner <rhyme label="b" type="f" corresp="#s1:l2">eeren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Koimt aen met <rhyme label="a" type="m">gesanck</rhyme></l>
        <l id="s2:l2" met="3" type="+-">End met soete <rhyme label="b" type="f">snaren</rhyme>:</l>
        <l id="s2:l3" met="3" type="+-">Datmen hoor <rhyme label="a" type="m" corresp="#s2:l1">tgeclanck</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">Van harp end van <rhyme label="c" type="m">luyt</rhyme>,</l>
        <l id="s2:l5" met="3" type="+-">Trommel ende <rhyme label="c" type="m" corresp="#s2:l4">fluyt</rhyme>,</l>
        <l id="s2:l6" met="3" type="+-">Om God te <rhyme label="b" type="f" corresp="#s2:l2">verclaren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Op de nieuwe <rhyme label="a" type="m">Maen</rhyme></l>
        <l id="s3:l2" met="3" type="+-">Steeckt vry de <rhyme label="b" type="f">trompetten</rhyme>,</l>
        <l id="s3:l3" met="3" type="+-">Laet tvolck comen <rhyme label="a" type="m" corresp="#s3:l1">aen</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">End met blijden <rhyme label="c" type="m">geest</rhyme>,</l>
        <l id="s3:l5" met="3" type="+-">Vieren onse <rhyme label="c" type="m" corresp="#s3:l4">feest</rhyme>,</l>
        <l id="s3:l6" met="3" type="+-">Volgens onse <rhyme label="b" type="f" corresp="#s3:l2">wetten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">Want in <rhyme label="a" type="m">Israel</rhyme></l>
        <l id="s4:l2" met="3" type="+-">Is dit onse <rhyme label="b" type="f">wijse</rhyme>:</l>
        <l id="s4:l3" met="3" type="+-">Ia tis een <rhyme label="a" type="m" corresp="#s4:l1">bevel</rhyme>,</l>
        <l id="s4:l4" met="3" type="+-">End een recht <rhyme label="c" type="m">geset</rhyme></l>
        <l id="s4:l5" met="3" type="+-">In Gods Iacobs <rhyme label="c" type="m" corresp="#s4:l4">wet</rhyme>,</l>
        <l id="s4:l6" met="3" type="+-">Tsijnen lof end <rhyme label="b" type="f" corresp="#s4:l2">prijse</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="+-">Die dit oorcondt <rhyme label="a" type="m">claer</rhyme></l>
        <l id="s5:l2" met="3" type="+-">Steld' in Iosephs <rhyme label="b" type="f">palen</rhyme>:</l>
        <l id="s5:l3" met="3" type="+-">Voerende sijn <rhyme label="a" type="m" corresp="#s5:l1">schaer</rhyme></l>
        <l id="s5:l4" met="3" type="+-">Uyt Egypten <rhyme label="c" type="m">landt</rhyme></l>
        <l id="s5:l5" met="3" type="+-">Daer wy geen <rhyme label="c" type="m" corresp="#s5:l4">verstandt</rhyme>,</l>
        <l id="s5:l6" met="3" type="+-">Hadden vander <rhyme label="b" type="f" corresp="#s5:l2">talen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="+-">Ick heb hem den <rhyme label="a" type="m">last</rhyme></l>
        <l id="s6:l2" met="3" type="+-">Vanden hals <rhyme label="b" type="f">geschoven</rhyme></l>
        <l id="s6:l3" met="3" type="+-">(Sprack hy) ende <rhyme label="a" type="m" corresp="#s6:l1">vast</rhyme></l>
        <l id="s6:l4" met="3" type="+-">Trowlijck <rhyme label="c" type="m">bygestaen</rhyme>,</l>
        <l id="s6:l5" met="3" type="+-">End sijn handt <rhyme label="c" type="m" corresp="#s6:l4">ontslaen</rhyme>,</l>
        <l id="s6:l6" met="3" type="+-">Van sPotbackers <rhyme label="b" type="f" corresp="#s6:l2">oven</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="+-">Daer du schier <rhyme label="a" type="m">versmoort</rhyme></l>
        <l id="s7:l2" met="3" type="+-">Van druck laegst heel <rhyme label="b" type="f">t'onder</rhyme>:</l>
        <l id="s7:l3" met="3" type="+-">Heb ick stracx <rhyme label="a" type="m" corresp="#s7:l1">verhoort</rhyme></l>
        <l id="s7:l4" met="3" type="+-">Dijn stem end <rhyme label="c" type="m">gekrijt</rhyme>,</l>
        <l id="s7:l5" met="3" type="+-">End heb dy <rhyme label="c" type="m" corresp="#s7:l4">bevrijt</rhyme>,</l>
        <l id="s7:l6" met="3" type="+-">Schuylend' in den <rhyme label="b" type="f" corresp="#s7:l2">donder</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="+-">Ick heb dy <rhyme label="a" type="m">beproeft</rhyme></l>
        <l id="s8:l2" met="3" type="+-">Aen den vloet der <rhyme label="b" type="f">twisten</rhyme>,</l>
        <l id="s8:l3" met="3" type="+-">Ende my <rhyme label="a" type="m" corresp="#s8:l1">bedroeft</rhyme>,</l>
        <l id="s8:l4" met="3" type="+-">Doe ick dy <rhyme label="c" type="m">bevondt</rhyme></l>
        <l id="s8:l5" met="3" type="+-">Dobbel inden <rhyme label="c" type="m" corresp="#s8:l4">grondt</rhyme>,</l>
        <l id="s8:l6" met="3" type="+-">End vol arge <rhyme label="b" type="f" corresp="#s8:l2">listen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="+-">Ick sprack, mijn volck <rhyme label="a" type="m">hoirt</rhyme></l>
        <l id="s9:l2" met="3" type="+-">Ick wil dy <rhyme label="b" type="f">getuygen</rhyme></l>
        <l id="s9:l3" met="3" type="+-">Mijnen wech end <rhyme label="a" type="m" corresp="#s9:l1">woirt</rhyme>:</l>
        <l id="s9:l4" met="3" type="+-">Woudstu slechs dijn <rhyme label="c" type="m">oor</rhyme></l>
        <l id="s9:l5" met="3" type="+-">Bieden tot <rhyme label="c" type="m" corresp="#s9:l4">gehoor</rhyme>,</l>
        <l id="s9:l6" met="3" type="+-">End thert tot my <rhyme label="b" type="f" corresp="#s9:l2">buygen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="+-">Du salst neven <rhyme label="a" type="m">my</rhyme></l>
        <l id="s10:l2" met="3" type="+-">Geenen God <rhyme label="b" type="f">aenveirden</rhyme>,</l>
        <l id="s10:l3" met="3" type="+-">Hy sy wie hy <rhyme label="a" type="m" corresp="#s10:l1">sy</rhyme>:</l>
        <l id="s10:l4" met="3" type="+-">Noch oock <rhyme label="c" type="m">jmmermeer</rhyme></l>
        <l id="s10:l5" met="3" type="+-">Bieden dienst oft <rhyme label="c" type="m" corresp="#s10:l4">eer</rhyme></l>
        <l id="s10:l6" met="3" type="+-">Andren God op <rhyme label="b" type="f" corresp="#s10:l2">eirden</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="+-">Want ick ben de <rhyme label="a" type="m">Heer</rhyme></l>
        <l id="s11:l2" met="3" type="+-">End dijn God <rhyme label="b" type="f">genadich</rhyme>,</l>
        <l id="s11:l3" met="3" type="+-">Groot end machtich <rhyme label="a" type="m" corresp="#s11:l1">seer</rhyme>:</l>
        <l id="s11:l4" met="3" type="+-">Ick heb dy <rhyme label="c" type="m">gebracht</rhyme></l>
        <l id="s11:l5" met="3" type="+-">Doir mijn stercke <rhyme label="c" type="m" corresp="#s11:l4">macht</rhyme></l>
        <l id="s11:l6" met="3" type="+-">Uyt Egypten <rhyme label="b" type="f" corresp="#s11:l2">smadich</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="+-">Doe wijt op, den <rhyme label="a" type="m">mont</rhyme>,</l>
        <l id="s12:l2" met="3" type="+-">Neem aen, mijn <rhyme label="b" type="f">weldaden</rhyme>.</l>
        <l id="s12:l3" met="3" type="+-">End ter selver <rhyme label="a" type="m" corresp="#s12:l1">stont</rhyme>,</l>
        <l id="s12:l4" met="3" type="+-">Sal ick dy met <rhyme label="c" type="m">goet</rhyme></l>
        <l id="s12:l5" met="3" type="+-">In all' <rhyme label="c" type="m" corresp="#s12:l4">overvloet</rhyme>,</l>
        <l id="s12:l6" met="3" type="+-">Vullen end <rhyme label="b" type="f" corresp="#s12:l2">versaden</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="+-">Maer mijn volck seer <rhyme label="a" type="m">steeg</rhyme></l>
        <l id="s13:l2" met="3" type="+-">Keert van my sijn <rhyme label="b" type="f">ooren</rhyme>,</l>
        <l id="s13:l3" met="3" type="+-">So het altijts <rhyme label="a" type="m" corresp="#s13:l1">pleeg</rhyme>:</l>
        <l id="s13:l4" met="3" type="+-">End Israel <rhyme label="c" type="m">blijft</rhyme></l>
        <l id="s13:l5" met="3" type="+-">Evenseer <rhyme label="c" type="m" corresp="#s13:l4">verstijft</rhyme>,</l>
        <l id="s13:l6" met="3" type="+-">End wilt my niet <rhyme label="b" type="f" corresp="#s13:l2">hooren</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="+-">Dies geef icks' oock <rhyme label="a" type="m">op</rhyme>,</l>
        <l id="s14:l2" met="3" type="+-">In haer crijgel <rhyme label="b" type="f">sinnen</rhyme></l>
        <l id="s14:l3" met="3" type="+-">Dat sy haeren <rhyme label="a" type="m" corresp="#s14:l1">kop</rhyme>,</l>
        <l id="s14:l4" met="3" type="+-">Volgen met der <rhyme label="c" type="m">daet</rhyme>:</l>
        <l id="s14:l5" met="3" type="+-">End naer eygen <rhyme label="c" type="m" corresp="#s14:l4">raet</rhyme>,</l>
        <l id="s14:l6" met="3" type="+-">Alle dinck <rhyme label="b" type="f" corresp="#s14:l2">beginnen</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="+-">Hadde mijn volck <rhyme label="a" type="m">doch</rhyme></l>
        <l id="s15:l2" met="3" type="+-">My, gehoor <rhyme label="b" type="f">gegeven</rhyme>,</l>
        <l id="s15:l3" met="3" type="+-">Sonder valsch <rhyme label="a" type="m" corresp="#s15:l1">bedroch</rhyme>:</l>
        <l id="s15:l4" met="3" type="+-">End dat <rhyme label="c" type="m">Israel</rhyme>,</l>
        <l id="s15:l5" met="3" type="+-">Waer nae mijn <rhyme label="c" type="m" corresp="#s15:l4">bevel</rhyme>,</l>
        <l id="s15:l6" met="3" type="+-">Op mijn baen <rhyme label="b" type="f" corresp="#s15:l2">gebleven</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="3" type="+-">Ick hadd' also <rhyme label="a" type="m">saen</rhyme>,</l>
        <l id="s16:l2" met="3" type="+-">Al die hen sijn <rhyme label="b" type="f">tegen</rhyme></l>
        <l id="s16:l3" met="3" type="+-">Doen te gronde <rhyme label="a" type="m" corresp="#s16:l1">gaen</rhyme>:</l>
        <l id="s16:l4" met="3" type="+-">Ende mijne <rhyme label="c" type="m">handt</rhyme></l>
        <l id="s16:l5" met="3" type="+-">Haddes' al met <rhyme label="c" type="m" corresp="#s16:l4">schandt</rhyme>,</l>
        <l id="s16:l6" met="3" type="+-">Plat ter neer <rhyme label="b" type="f" corresp="#s16:l2">geslegen</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="3" type="+-">Die God <rhyme label="a" type="m">wederstaen</rhyme>,</l>
        <l id="s17:l2" met="3" type="+-">Souden hem al <rhyme label="b" type="f">truerich</rhyme></l>
        <l id="s17:l3" met="3" type="+-">Hebben dienst <rhyme label="a" type="m" corresp="#s17:l1">gedaen</rhyme>.</l>
        <l id="s17:l4" met="3" type="+-">Ende sijne <rhyme label="c" type="m">jeugt</rhyme></l>
        <l id="s17:l5" met="3" type="+-">Had gegroeyt in <rhyme label="c" type="m" corresp="#s17:l4">vreugt</rhyme>,</l>
        <l id="s17:l6" met="3" type="+-">End vreed eewich <rhyme label="b" type="f" corresp="#s17:l2">duerich</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="3" type="+-">Ick soud hem kort <rhyme label="a" type="m">om</rhyme></l>
        <l id="s18:l2" met="3" type="+-">Hebben laten <rhyme label="b" type="f">spijsen</rhyme></l>
        <l id="s18:l3" met="3" type="+-">Met fijn terwen <rhyme label="a" type="m" corresp="#s18:l1">blom</rhyme>,</l>
        <l id="s18:l4" met="3" type="+-">End in <rhyme label="c" type="m">overvloet</rhyme>,</l>
        <l id="s18:l5" met="3" type="+-">Hebben honich <rhyme label="c" type="m" corresp="#s18:l4">soet</rhyme></l>
        <l id="s18:l6" met="3" type="+-">Doen wt steenen <rhyme label="b" type="f" corresp="#s18:l2">rijsen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

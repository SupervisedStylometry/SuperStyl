  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">ZAaligheden, <rhyme label="a" type="f">zaaligheden</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Borgers van het <rhyme label="b" type="m">Kanaan</rhyme>!</l>
        <l id="s1:l3" met="4" type="+-">Zyt gezeegend, heil'ge <rhyme label="a" type="f" corresp="#s1:l1">Leeden</rhyme>!</l>
        <l id="s1:l4" met="4" type="+-">Jesus blikk' u vrind'lyk <rhyme label="b" type="m" corresp="#s1:l2">aan</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">O wie moet zich niet <rhyme label="a" type="f">verbly'en</rhyme>!</l>
        <l id="s2:l2" met="4" type="+-">Dog met diep geboog'nen <rhyme label="b" type="m">zin</rhyme>.</l>
        <l id="s2:l3" met="4" type="+-">Wie is 't, die niet t'allen <rhyme label="a" type="f" corresp="#s2:l1">ty'en</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Licht des Vaders, U <rhyme label="b" type="m" corresp="#s2:l2">beminn'</rhyme>!</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Wie zal antwoord voor Hem <rhyme label="a" type="f">vinden</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Die zyn Heiland niet greep <rhyme label="b" type="m">aan</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Als Hy zyn Genaade <rhyme label="a" type="f" corresp="#s3:l1">winden</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Over zyne ziel liet <rhyme label="b" type="m" corresp="#s3:l2">gaan</rhyme>!</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Bron van Liefde! vol <rhyme label="a" type="f">genaade</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Diep buig alles voor U <rhyme label="b" type="m">neêr</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Ook met woorden, meer met <rhyme label="a" type="f" corresp="#s4:l1">daaden</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Hert en wandel, hoogste <rhyme label="b" type="m" corresp="#s4:l2">Heer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Laat niets aan ons ov'rig <rhyme label="a" type="f">blyven</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">'t Welk niet voor en met U <rhyme label="b" type="m">is</rhyme>.</l>
        <l id="s5:l3" met="4" type="+-">Want U willen w' ons <rhyme label="a" type="f" corresp="#s5:l1">verschryven</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Die ons Alles zyt <rhyme label="b" type="m" corresp="#s5:l2">gewis</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Geef ons tevens deeze <rhyme label="a" type="f">Beede</rhyme>:</l>
        <l id="s6:l2" met="4" type="+-">Dat uw Naam geheiligt <rhyme label="b" type="m">zy</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Wy een Zout zyn hier <rhyme label="a" type="f" corresp="#s6:l1">beneden</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">En van alle domheit <rhyme label="b" type="m" corresp="#s6:l2">vry</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Maak ons U tot een <rhyme label="a" type="f">Gemeente</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Welke onder spot en <rhyme label="b" type="m">hoon</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Glinster' als een <rhyme label="a" type="f" corresp="#s7:l1">Eélgesteente</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Uwe ziel ten <rhyme label="b" type="m" corresp="#s7:l2">arbeids-loon</rhyme>.</l>
      </lg>
    </lg>
  </text>

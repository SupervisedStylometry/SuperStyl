    <melody>Gelijk de schone bloempjes kwijnen</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Als Luciaan die schoone <rhyme label="a" type="f">Herderinne</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Haar gewolde vee dreef te velde <rhyme label="a" type="f" corresp="#s1:l1">inne</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Kwam haar Damon te <rhyme label="b" type="m">gemoet</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">En hy heeft haar mindelyk <rhyme label="b" type="m" corresp="#s1:l3">gegroet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Goon groet uw lieve <rhyme label="a" type="f">Sielsvrindinne</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Ag moog ik uw opregt <rhyme label="a" type="f" corresp="#s2:l1">beminne</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Want uw schoonheit die my <rhyme label="b" type="m">toelonkt</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Die heeft my met min <rhyme label="b" type="m" corresp="#s2:l3">ontfonkt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Want uw oogjes als <rhyme label="a" type="f">corale</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Ag kon ik uw schoonheit maar <rhyme label="a" type="f" corresp="#s3:l1">afmaale</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">En uw lieve neusje als <rhyme label="b" type="m">Ivoor</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Uw schoonheid klinkt de weereld <rhyme label="b" type="m" corresp="#s3:l3">door</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">En uw lieve schoone <rhyme label="a" type="f">wangen</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Die zyne met roode Roosjes <rhyme label="a" type="f" corresp="#s4:l1">behange</rhyme></l>
        <l id="s4:l3" met="4" type="-+">En uw Halsje gelyk een <rhyme label="b" type="m">Swaan</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Gy zyt nog schoonder als <rhyme label="b" type="m" corresp="#s4:l3">Diaan</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ag lieve schoone <rhyme label="a" type="f">Herderinne</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Draag my maar toe uw zuivâ€™re <rhyme label="a" type="f" corresp="#s5:l1">minne</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Ik zal u altoos zyn <rhyme label="b" type="m">getrouw</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Als een opregte Man zyn <rhyme label="b" type="m" corresp="#s5:l3">Vrouw</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ag Damon als gy myn opregt zal <rhyme label="a" type="f">minnen</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Dan zal ik altoos blyve uw <rhyme label="a" type="f" corresp="#s6:l1">Vrindinne</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">En diene uw opregt en <rhyme label="b" type="m">Trouw</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Gelyk de pligt is van een <rhyme label="b" type="m" corresp="#s6:l3">Vrouw</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Kom nu Herders en <rhyme label="a" type="f">Herderinnen</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Laat ons dit Feest met vreugt <rhyme label="a" type="f" corresp="#s7:l1">beginnen</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Speelt op Bas Fiool en <rhyme label="b" type="m">Fluit</rhyme>.</l>
        <l id="s7:l4" met="4" type="-+">Ter Eeren van Bruidegom en <rhyme label="b" type="m" corresp="#s7:l3">Bruid</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">,,T'Vreuchdich <rhyme label="a" type="f">verblijden</rhyme></l>
        <l id="s1:l2" met="2" type="+-">,,Volghet <rhyme label="b" type="m">naer</rhyme></l>
        <l id="s1:l3" met="2" type="-+">,,Het droeuich <rhyme label="a" type="f" corresp="#s1:l1">lijden</rhyme>,</l>
        <l id="s1:l4" met="2" type="+-">T'blijckt hier <rhyme label="b" type="m" corresp="#s1:l2">claer</rhyme></l>
        <l id="s1:l5" met="2" type="-+">Aen dese <rhyme label="c" type="f">dinghen</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">Dus vvilt nu <rhyme label="c" type="f" corresp="#s1:l5">singhen</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">En vrolijck <rhyme label="c" type="f" corresp="#s1:l5">springhen</rhyme></l>
        <l id="s1:l8" met="2" type="-+">Al te <rhyme label="b" type="m" corresp="#s1:l2">gaer</rhyme></l>
        <l id="s1:l9" met="3" type="-+">Een schamel <rhyme label="d" type="f">schaep-herdersse</rhyme></l>
        <l id="s1:l10" met="3" type="+-">Ons Grisella <rhyme label="e" type="m">fris</rhyme></l>
        <l id="s1:l11" met="3" type="+-">Een moghende <rhyme label="d" type="f" corresp="#s1:l9">Princersse</rhyme></l>
        <l id="s1:l12" met="3" type="+-">Nu ghevvorden <rhyme label="e" type="m" corresp="#s1:l10">is</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Sy heeft <rhyme label="a" type="f">ghenoten</rhyme></l>
        <l id="s2:l2" met="2" type="+-">Groote <rhyme label="b" type="m">loon</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Den Prins <rhyme label="a" type="f" corresp="#s2:l1">ghestoten</rhyme></l>
        <l id="s2:l4" met="2" type="+-">Vanden <rhyme label="b" type="m" corresp="#s2:l2">troon</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Sy is <rhyme label="c" type="f">verheuen</rhyme>,</l>
        <l id="s2:l6" met="2" type="-+">En daer <rhyme label="c" type="f" corresp="#s2:l5">beneuen</rhyme></l>
        <l id="s2:l7" met="2" type="-+">Is haer <rhyme label="c" type="f" corresp="#s2:l5">ghegheuen</rhyme></l>
        <l id="s2:l8" met="2" type="-+">Sijn rijck en <rhyme label="b" type="m" corresp="#s2:l2">croon</rhyme></l>
        <l id="s2:l9" met="3" type="-+">Wel hem die sijn <rhyme label="d" type="f">natuere</rhyme></l>
        <l id="s2:l10" met="3" type="+-">Soo bedvvinghen <rhyme label="e" type="m">can</rhyme></l>
        <l id="s2:l11" met="3" type="+-">Dat hy het soet naer <rhyme label="d" type="f" corresp="#s2:l9">t'suere</rhyme></l>
        <l id="s2:l12" met="3" type="+-">Eens mach smaken <rhyme label="e" type="m" corresp="#s2:l10">dan</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Hy <rhyme label="a" type="f">onuerduldich</rhyme></l>
        <l id="s3:l2" met="2" type="+-">Had <rhyme label="b" type="m">vercracht</rhyme></l>
        <l id="s3:l3" met="2" type="-+">Haer, en <rhyme label="a" type="f" corresp="#s3:l1">onschuldich</rhyme></l>
        <l id="s3:l4" met="2" type="+-">
          <rhyme label="b" type="m" corresp="#s3:l2">Om-ghebracht</rhyme>
        </l>
        <l id="s3:l5" met="2" type="-+">Die sy <rhyme label="c" type="f">besiende</rhyme>,</l>
        <l id="s3:l6" met="2" type="-+">En seer <rhyme label="c" type="f" corresp="#s3:l5">beminde</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">Midts hy haer <rhyme label="c" type="f" corresp="#s3:l5">dinde</rhyme></l>
        <l id="s3:l8" met="2" type="-+">Dach, en <rhyme label="b" type="m" corresp="#s3:l2">nacht</rhyme></l>
        <l id="s3:l9" met="3" type="-+">Maer hare <rhyme label="d" type="f">lijdsaem-heden</rhyme></l>
        <l id="s3:l10" met="3" type="+-">Vroken, Tyters <rhyme label="e" type="m">bloet</rhyme></l>
        <l id="s3:l11" met="3" type="+-">Door deucht heeft sy <rhyme label="d" type="f" corresp="#s3:l9">vertreden</rhyme>.</l>
        <l id="s3:l12" met="3" type="+-">s'Princen hooghen <rhyme label="e" type="m" corresp="#s3:l10">moet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Wel aen dan <rhyme label="a" type="f">schoone</rhyme></l>
        <l id="s4:l2" met="2" type="+-">Maeghden <rhyme label="b" type="m">teer</rhyme></l>
        <l id="s4:l3" met="2" type="-+">,,Bevvaert u <rhyme label="a" type="f" corresp="#s4:l1">croone</rhyme></l>
        <l id="s4:l4" met="2" type="+-">,,Dats' u <rhyme label="b" type="m" corresp="#s4:l2">eer</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">,,Die in gheen <rhyme label="c" type="f">stonden</rhyme></l>
        <l id="s4:l6" met="2" type="-+">,,Wilt dit <rhyme label="c" type="f" corresp="#s4:l5">door-gronden</rhyme></l>
        <l id="s4:l7" met="2" type="-+">â€˜Wort vveer <rhyme label="c" type="f" corresp="#s4:l5">gheuonden</rhyme></l>
        <l id="s4:l8" met="2" type="-+"><rhyme label="b" type="m" corresp="#s4:l2">,,Immermeer</rhyme>.</l>
        <l id="s4:l9" met="3" type="-+">,,Deucht can den mensch groot <rhyme label="d" type="f">maken</rhyme></l>
        <l id="s4:l10" met="3" type="+-">,,Dies vveer-staet het <rhyme label="e" type="m">quaet</rhyme></l>
        <l id="s4:l11" met="3" type="+-">Op dat ghy moeght <rhyme label="d" type="f" corresp="#s4:l9">gheraken</rhyme></l>
        <l id="s4:l12" met="3" type="+-">Dus tot hooghen <rhyme label="e" type="m" corresp="#s4:l10">staet</rhyme>.</l>
      </lg>
    </lg>
  </text>

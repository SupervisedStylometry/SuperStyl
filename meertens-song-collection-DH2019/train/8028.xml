  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">KOmt, komt o drie-mael heyl'ghe <rhyme label="a" type="m">Gheest</rhyme>!</l>
        <l id="s1:l2" met="4" type="-+">Ghebenedijt ons <rhyme label="a" type="m" corresp="#s1:l1">Pincxter-feest</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Komt Tortel-duyf van 'sHemels <rhyme label="b" type="m">dack</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">En brenght ons den <rhyme label="b" type="m" corresp="#s1:l3">Olijven-tack</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Vertrooster brenght ons Christi <rhyme label="a" type="m">vree</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">En neemt in onse herten <rhyme label="a" type="m" corresp="#s2:l1">stee</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Gheest Godts maeckt onsen gheest <rhyme label="b" type="m">gewis</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Dat Godt ons aller Vader <rhyme label="b" type="m" corresp="#s2:l3">is</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">O vingher Godts! dit steenen <rhyme label="a" type="m">hert</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Vermorselt, dat het weecker <rhyme label="a" type="m" corresp="#s3:l1">wert</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">En Christi wet, die eeuwigh <rhyme label="b" type="m">blijft</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">In ons gemoet en sinnen <rhyme label="b" type="m" corresp="#s3:l3">schrijft</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">O die ghy onbegrijp'lijck <rhyme label="a" type="m">zijt</rhyme>!</l>
        <l id="s4:l2" met="4" type="-+">Ons hert tot uwen Tempel <rhyme label="a" type="m" corresp="#s4:l1">wijt</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En ons inwendigheyt <rhyme label="b" type="m">herschept</rhyme>.</l>
        <l id="s4:l4" met="4" type="-+">Die lust by ons te woonen <rhyme label="b" type="m" corresp="#s4:l3">hebt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Komt Hemel-dou en <rhyme label="a" type="m">overstort</rhyme></l>
        <l id="s5:l2" met="4" type="-+">'Tghemoet, onvruchtbaer en <rhyme label="a" type="m" corresp="#s5:l1">verdort</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">O stroom des levens! o <rhyme label="b" type="m">Fonteyn</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Bevochtight ons en wascht ons <rhyme label="b" type="m" corresp="#s5:l3">reyn</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Komt Godtlijck Vyer en steeckt <rhyme label="a" type="m">voortaen</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Ons koude ziel met yver <rhyme label="a" type="m" corresp="#s6:l1">aen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Comt heyligh vyer verteert, <rhyme label="b" type="m">verslint</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Al wat in ons noch 'tvleesch <rhyme label="b" type="m" corresp="#s6:l3">bemint</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Ghy wint des Heeren weest doch <rhyme label="a" type="m">mee</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Ons zielen schip in 'swerelts <rhyme label="a" type="m" corresp="#s7:l1">Zee</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Op dat wy vry van schip-breuck <rhyme label="b" type="m">dan</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Landen in 't Hemels <rhyme label="b" type="m" corresp="#s7:l3">Canaan</rhyme>.</l>
      </lg>
    </lg>
  </text>

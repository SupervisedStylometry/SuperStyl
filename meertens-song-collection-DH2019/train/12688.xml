  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Hey verheught u <rhyme label="a" type="f">Ionggelinggen</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">In de dagen van u <rhyme label="b" type="m">Ieught</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Laat u keeltjes helder <rhyme label="a" type="f" corresp="#s1:l1">singgen</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Dient u van des Werelts <rhyme label="b" type="m" corresp="#s1:l2">vreught</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Speelt en queelt, en jokt en <rhyme label="c" type="m">malt</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Doet vry dat u wel <rhyme label="c" type="m" corresp="#s1:l5">bevalt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">’t Geen u oogen, door ’t <rhyme label="a" type="f">aenschouwen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Eenighsins vermaken <rhyme label="b" type="m">kan</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Wilt dat niet te rugge <rhyme label="a" type="f" corresp="#s2:l1">houwen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Neemter u geneuchte <rhyme label="b" type="m" corresp="#s2:l2">van</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Speelt en queelt, en jokt en <rhyme label="c" type="m">malt</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Doet vry dat u wel <rhyme label="c" type="m" corresp="#s2:l5">bevalt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Wandelt in uws herten <rhyme label="a" type="f">wegen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Dient u van de groene <rhyme label="b" type="m">tijt</rhyme>:</l>
        <l id="s3:l3" met="4" type="+-">Want nu komt het best <rhyme label="a" type="f" corresp="#s3:l1">gelegen</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Nu ghy jonk en jeuchdigh <rhyme label="b" type="m" corresp="#s3:l2">zijt</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Speelt en queelt, en jokt en <rhyme label="c" type="m">malt</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Doet vry dat u wel <rhyme label="c" type="m" corresp="#s3:l5">bevalt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Wilt geen blijde geest <rhyme label="a" type="f">versteuren</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Doet de suffert van u <rhyme label="b" type="m">gaan</rhyme>:</l>
        <l id="s4:l3" met="4" type="+-">Want nu mach het u <rhyme label="a" type="f" corresp="#s4:l1">gebeuren</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Wordje oudt dan is ’t <rhyme label="b" type="m" corresp="#s4:l2">gedaan</rhyme>.</l>
        <l id="s4:l5" met="4" type="-+">Speelt en queelt, en jokt en <rhyme label="c" type="m">malt</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Doet vry dat u wel <rhyme label="c" type="m" corresp="#s4:l5">bevalt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Dat men niet en kan <rhyme label="a" type="f">bewaren</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Dient in tijdts te zijn <rhyme label="b" type="m">gebruykt</rhyme>:</l>
        <l id="s5:l3" met="4" type="+-">Koot dan in u jongge <rhyme label="a" type="f" corresp="#s5:l1">Iaren</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Eer de Ieught daar onder <rhyme label="b" type="m" corresp="#s5:l2">duykt</rhyme>.</l>
        <l id="s5:l5" met="4" type="-+">Speelt en queelt, en jokt en <rhyme label="c" type="m">malt</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Doet vry dat u wel <rhyme label="c" type="m" corresp="#s5:l5">bevalt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Denkt, ’t en sal u geensins <rhyme label="a" type="f">voegen</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Als den ouden dagh <rhyme label="b" type="m">begint</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">En met rimpels sal <rhyme label="a" type="f" corresp="#s6:l1">beploegen</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Wat men geestigh in u <rhyme label="b" type="m" corresp="#s6:l2">vint</rhyme>.</l>
        <l id="s6:l5" met="4" type="-+">Speelt en queelt, en jokt en <rhyme label="c" type="m">malt</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Doet vry dat u wel <rhyme label="c" type="m" corresp="#s6:l5">bevalt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Maar, O dwase <rhyme label="a" type="f">Ionggelinggen</rhyme>!</l>
        <l id="s7:l2" met="4" type="+-">Soo ghy dus u tijdt <rhyme label="b" type="m">besteet</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Wil ik dit aan u <rhyme label="a" type="f" corresp="#s7:l1">bedinggen</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Dat ghy van te vooren <rhyme label="b" type="m" corresp="#s7:l2">weet</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Dat u Godt om desen <rhyme label="c" type="m">al</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Voor ’t Gericht doen komen <rhyme label="c" type="m" corresp="#s7:l5">sal</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Alles wordt daar <rhyme label="a" type="f">op-genomen</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Wat een yeder doetof <rhyme label="b" type="m">laat</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">En de dagh sal seekker <rhyme label="a" type="f" corresp="#s8:l1">komen</rhyme></l>
        <l id="s8:l4" met="4" type="+-">Dat men dan sijn gantsche <rhyme label="b" type="m" corresp="#s8:l2">staat</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Van sijn leven, doen en <rhyme label="c" type="m">al</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Een-maal reden geven <rhyme label="c" type="m" corresp="#s8:l5">sal</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Die nu lacchen, sullen <rhyme label="a" type="f">weenen</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Als dat strengh Gerecht <rhyme label="b" type="m">begint</rhyme>:</l>
        <l id="s9:l3" met="4" type="+-">Siet, wy seggen ’t u voor <rhyme label="a" type="f" corresp="#s9:l1">heenen</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Slaat het doch niet in de <rhyme label="b" type="m" corresp="#s9:l2">wint</rhyme>:</l>
        <l id="s9:l5" met="4" type="-+">Denkkend’ altijt op die <rhyme label="c" type="m">dagh</rhyme></l>
        <l id="s9:l6" met="4" type="+-">Die geen mensch voor-by en <rhyme label="c" type="m" corresp="#s9:l5">magh</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ICk hebbe bemindt, daerom sal de <rhyme label="a" type="m">Heer</rhyme></l>
        <l id="s1:l2" met="4" type="-+">De stem verhooren van mijn <rhyme label="b" type="m">gheclach</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">En zijn Ooren tot my keeren <rhyme label="a" type="m" corresp="#s1:l1">seer</rhyme>:</l>
        <l id="s1:l4" met="4" type="-+">Drom wil ick hem aenroepen alle mijn <rhyme label="b" type="m" corresp="#s1:l2">dach</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Want de stricken vander <rhyme label="c" type="m">doot</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">Ende ongheluck <rhyme label="c" type="m" corresp="#s1:l5">groot</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Die hadden my omuanghen <rhyme label="d" type="m">reyn</rhyme>,</l>
        <l id="s1:l8" met="2" type="-+">Oock dancxten vander <rhyme label="e" type="m">Hel</rhyme>,</l>
        <l id="s1:l9" met="2" type="-+">Die gheraeckten my <rhyme label="e" type="m" corresp="#s1:l8">snel</rhyme>,</l>
        <l id="s1:l10" met="4" type="-+">En ick quam in perijckel, en noodt <rhyme label="d" type="m" corresp="#s1:l7">certeyn</rhyme>,</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Den naem des Heeren dien roep ick <rhyme label="a" type="m">aen</rhyme>:</l>
        <l id="s2:l2" met="4" type="-+">O Heer verlos mijn Siel wt den <rhyme label="b" type="m">noodt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">O ghenadighe Heer wilt my <rhyme label="a" type="m" corresp="#s2:l1">bystaen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Ghy rechtuaerdighe, en bermhertighe <rhyme label="b" type="m" corresp="#s2:l2">Godt</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">De Heer die <rhyme label="c" type="m">behoedt</rhyme></l>
        <l id="s2:l6" met="2" type="-+">Met syn goetheyt <rhyme label="c" type="m" corresp="#s2:l5">soet</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">De cleyne eenuuldighe liedens <rhyme label="d" type="m">subijdt</rhyme>,</l>
        <l id="s2:l8" met="2" type="-+">Want doen ick <rhyme label="e" type="m">ras</rhyme>,</l>
        <l id="s2:l9" met="2" type="-+">Gheel verarmt <rhyme label="e" type="m" corresp="#s2:l8">was</rhyme>,</l>
        <l id="s2:l10" met="4" type="-+">So hielp hy er my wt te rechter <rhyme label="d" type="m" corresp="#s2:l7">tijdt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Mijn lieue Siel nu doch te vreden <rhyme label="a" type="m">zijt</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Want Godt u wedrom gheholpen <rhyme label="b" type="m">heeft</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Mijne Siel hebt ghy o Heer <rhyme label="a" type="m" corresp="#s3:l1">subijdt</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Wt den doot ghetrocken datse nu <rhyme label="b" type="m" corresp="#s3:l2">leeft</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">En die ooghen <rhyme label="c" type="m">mijn</rhyme></l>
        <l id="s3:l6" met="2" type="-+">Vande tranen <rhyme label="c" type="m" corresp="#s3:l5">fijn</rhyme>:</l>
        <l id="s3:l7" met="4" type="-+">Oock mijn voeten beurijdt vanden <rhyme label="d" type="m">val</rhyme>,</l>
        <l id="s3:l8" met="2" type="-+">Daerom wil ick <rhyme label="e" type="m">gaen</rhyme>,</l>
        <l id="s3:l9" met="2" type="-+">Voor Godt den Heer <rhyme label="e" type="m" corresp="#s3:l8">staen</rhyme>,</l>
        <l id="s3:l10" met="4" type="-+">En in dlandt der leuenden wandlen <rhyme label="d" type="m" corresp="#s3:l7">al</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ick ghelooue, daerom spreeck ick so <rhyme label="a" type="m">claer</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Al worde ick seer gheplaecht met <rhyme label="b" type="m">pijn</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Ick spraeck, doen ick verzaecht was <rhyme label="a" type="m" corresp="#s4:l1">voorwaer</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Dat alle menschen loeghenaers <rhyme label="b" type="m" corresp="#s4:l2">zijn</rhyme>:</l>
        <l id="s4:l5" met="2" type="-+">Hoe sal ickt den <rhyme label="c" type="m">Heer</rhyme></l>
        <l id="s4:l6" met="2" type="-+">Verghelden <rhyme label="c" type="m" corresp="#s4:l5">ymmermeer</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Alle zijne weldaden aen my <rhyme label="d" type="m">ghedaen</rhyme>:</l>
        <l id="s4:l8" met="2" type="-+">Den Kelck <rhyme label="e" type="m">heylsaem</rhyme>,</l>
        <l id="s4:l9" met="2" type="-+">Wil ick van stonden <rhyme label="e" type="m" corresp="#s4:l8">aen</rhyme></l>
        <l id="s4:l10" met="4" type="-+">Nemen: en synen naem roepen <rhyme label="d" type="m" corresp="#s4:l7">aen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ick wil mijn gheloften betalen <rhyme label="a" type="m">gheheel</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Den Heere voor allen zijn volck <rhyme label="b" type="m">fijn</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Och hoe gheldt der heylighen doot so <rhyme label="a" type="m" corresp="#s5:l1">veel</rhyme>:</l>
        <l id="s5:l4" met="4" type="-+">Voor Godt den Heer: en allen hun <rhyme label="b" type="m" corresp="#s5:l2">pijn</rhyme>:</l>
        <l id="s5:l5" met="2" type="-+">Ick ben uwen <rhyme label="c" type="m">knecht</rhyme>,</l>
        <l id="s5:l6" met="2" type="-+">Ick ben uwen <rhyme label="c" type="m" corresp="#s5:l5">knecht</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">En ick ben uwer dienstmaecht <rhyme label="d" type="m">sone</rhyme>:</l>
        <l id="s5:l8" met="2" type="-+">Ghy hebt mijnen <rhyme label="e" type="m">bandt</rhyme>,</l>
        <l id="s5:l9" met="2" type="-+">Met uwe <rhyme label="e" type="m" corresp="#s5:l8">handt</rhyme>,</l>
        <l id="s5:l10" met="4" type="-+">Ghebroken, en my verlost <rhyme label="d" type="m" corresp="#s5:l7">schoone</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Danckofferand wil ick offeren <rhyme label="a" type="m">u</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">En u mijn gheloften betalen <rhyme label="b" type="m">terstondt</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Voor alle zijn volck, dwelck met my <rhyme label="a" type="m" corresp="#s6:l1">nu</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Den Heeren loeft van herten <rhyme label="b" type="m" corresp="#s6:l2">grondt</rhyme>,</l>
        <l id="s6:l5" met="2" type="-+">Inde houen <rhyme label="c" type="m">seere</rhyme>,</l>
        <l id="s6:l6" met="2" type="-+">Van thuys des <rhyme label="c" type="m" corresp="#s6:l5">Heeren</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Daer aenroepen wy synen <rhyme label="d" type="m">name</rhyme>,</l>
        <l id="s6:l8" met="2" type="-+">Met seer luyde <rhyme label="e" type="m">stem</rhyme>,</l>
        <l id="s6:l9" met="2" type="-+">In u <rhyme label="e" type="m" corresp="#s6:l8">Jerusalem</rhyme>,</l>
        <l id="s6:l10" met="4" type="-+">Gheloeft sy Godt de Heer, <rhyme label="d" type="m" corresp="#s6:l7">Amen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

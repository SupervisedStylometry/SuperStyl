  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">HEil'ge Geest, gy Trooster <rhyme label="a" type="m">dael</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Uit den hooghen Hemels <rhyme label="a" type="m" corresp="#s1:l1">sael</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Ons met Uw genaê <rhyme label="a" type="m" corresp="#s1:l1">bestrael</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Stiert ons sinnen en <rhyme label="a" type="m">vergaert</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Brengt ons gaeven dier en <rhyme label="a" type="m" corresp="#s2:l1">waerd</rhyme></l>
        <l id="s2:l3" met="4" type="+-">En verlicht ons op der <rhyme label="a" type="m" corresp="#s2:l1">aerd</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">O Gy soet en waerde <rhyme label="a" type="m">Gast</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Met Uw troost ons herten <rhyme label="a" type="m" corresp="#s3:l1">tast</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Ons verquik in alle <rhyme label="a" type="m" corresp="#s3:l1">last</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Met Uw troost, Heer, ons <rhyme label="a" type="m">beschyn</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Als wy in aenvechting <rhyme label="a" type="m" corresp="#s4:l1">zijn</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">En bevaên met angst en <rhyme label="a" type="m" corresp="#s4:l1">pyn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">O Gy Sonne van <rhyme label="a" type="m">genaed'</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Met Uw vreughde haer <rhyme label="a" type="m" corresp="#s5:l1">versaed</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Die U roepen aen om <rhyme label="a" type="m" corresp="#s5:l1">raed</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Sonder Uwe hulp en <rhyme label="a" type="m">gonst</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Is ons doen en al ons <rhyme label="a" type="m" corresp="#s6:l1">konst</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Anders niet als ydel <rhyme label="a" type="m" corresp="#s6:l1">vonst</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Reinight ons van sonden, <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Laef ons hert, het dorst so <rhyme label="a" type="m" corresp="#s7:l1">seer</rhyme>;</l>
        <l id="s7:l3" met="4" type="+-">Heelt 't welk is verwondt en <rhyme label="a" type="m" corresp="#s7:l1">teer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Leid ons op Uw rechte <rhyme label="a" type="m">baen</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Steek de koude herten <rhyme label="a" type="m" corresp="#s8:l1">aen</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Brengt te recht die doolen <rhyme label="a" type="m" corresp="#s8:l1">gaen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Die wy g'looven met <rhyme label="a" type="m">bestand</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Geeft ons tot gewisse <rhyme label="a" type="m" corresp="#s9:l1">pand</rhyme></l>
        <l id="s9:l3" met="4" type="+-">Gaeven van Uw milde <rhyme label="a" type="m" corresp="#s9:l1">hand</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Dat wy leven <rhyme label="a" type="m">heilighlyk</rhyme>,</l>
        <l id="s10:l2" met="4" type="+-">Saligh sterven, en <rhyme label="a" type="m" corresp="#s10:l1">gelyk</rhyme></l>
        <l id="s10:l3" met="4" type="+-">By U zijn in 't <rhyme label="a" type="m" corresp="#s10:l1">Hemelryk</rhyme>.</l>
      </lg>
    </lg>
  </text>

    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Willem Sluiter</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">O Iesus, die soo geerne <rhyme label="a" type="f">nadert</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Al waar maar twee of drie <rhyme label="b" type="m">alleen</rhyme></l>
        <l id="s1:l3" met="4" type="+-">In uwen Name zijn <rhyme label="a" type="f" corresp="#s1:l1">vergadert</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Kom ook tot ons in 't midden <rhyme label="b" type="m" corresp="#s1:l2">treen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Wy zijn wel d'eer en gunst niet <rhyme label="a" type="f">waardig</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Dat gy komt onder onse <rhyme label="b" type="m">dak</rhyme>;</l>
        <l id="s2:l3" met="4" type="+-">Doch gy brengt mee, en schenkt ons <rhyme label="a" type="f" corresp="#s2:l1">vaardig</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Wat oit ons' arme ziel <rhyme label="b" type="m" corresp="#s2:l2">ontbrak</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Dus kom, en woon by ons soo <rhyme label="a" type="f">blijklik</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Wees van 't geselschap soo de <rhyme label="b" type="m">kroon</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Dat onder ons uw Woort ook <rhyme label="a" type="f" corresp="#s3:l1">rijklik</rhyme></l>
        <l id="s3:l4" met="4" type="+-">In alle tucht en wijsheit <rhyme label="b" type="m" corresp="#s3:l2">woon'</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Wilt ons verheugen, en <rhyme label="a" type="f">verlichten</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Door uwen Geest, dat wy <rhyme label="b" type="m">malkaar</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Met woorden en met werken <rhyme label="a" type="f" corresp="#s4:l1">stichten</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">En elk een goed geweet <rhyme label="b" type="m" corresp="#s4:l2">bewaar</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Laat ons met Lofgesangen, <rhyme label="a" type="f">Psalmen</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">En geestelijke Lied'ren <rhyme label="b" type="m">t'saam</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Uw eer en glori steeds <rhyme label="a" type="f" corresp="#s5:l1">uitgalmen</rhyme>.</l>
        <l id="s5:l4" met="4" type="+-">Maak ons tot alles goeds <rhyme label="b" type="m" corresp="#s5:l2">bequaam</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Trek ons soo met uw <rhyme label="a" type="f">liefde-koorden</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Dat wy ook trekken eene <rhyme label="b" type="m">lijn</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">En nimmer uws of uwer <rhyme label="a" type="f" corresp="#s6:l1">woorden</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Ons mogen schamen, waar wy <rhyme label="b" type="m" corresp="#s6:l2">zijn</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">O heil-son, licht ons met uw <rhyme label="a" type="f">klaarheit</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">En wijs ons uw oprechte <rhyme label="b" type="m">paan</rhyme>;</l>
        <l id="s7:l3" met="4" type="+-">Geleid en leid ons in uw <rhyme label="a" type="f" corresp="#s7:l1">waarheit</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">En leer ons uwe wegen <rhyme label="b" type="m" corresp="#s7:l2">gaan</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Bewaar ons, dat wy nimmer <rhyme label="a" type="f">komen</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Op 't padt van 't boos en godtloos <rhyme label="b" type="m">rot</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Het welk, uit weelde, met de <rhyme label="a" type="f" corresp="#s8:l1">vromen</rhyme></l>
        <l id="s8:l4" met="4" type="+-">En met haar beste werken <rhyme label="b" type="m" corresp="#s8:l2">spot</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Laat onse lust in uwe wet <rhyme label="a" type="f">zijn</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Ia laat ons daar op, nacht en <rhyme label="b" type="m">dag</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Met overdenking soo geset <rhyme label="a" type="f" corresp="#s9:l1">zijn</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Dat hert en mont het tuigen <rhyme label="b" type="m" corresp="#s9:l2">mag</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Uw liefde, goetheit, en <rhyme label="a" type="f">genade</rhyme></l>
        <l id="s10:l2" met="4" type="+-">Verheug ons meer dan koorn of <rhyme label="b" type="m">wijn</rhyme>.</l>
        <l id="s10:l3" met="4" type="+-">Dat alles ons als drek en <rhyme label="a" type="f" corresp="#s10:l1">schade</rhyme></l>
        <l id="s10:l4" met="4" type="+-">By u en uwe kennis <rhyme label="b" type="m" corresp="#s10:l2">schijn'</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Geef, dat het noit ons mag <rhyme label="a" type="f">verdrieten</rhyme></l>
        <l id="s11:l2" met="4" type="+-">By u, of in uw dienst en <rhyme label="b" type="m">werk</rhyme>.</l>
        <l id="s11:l3" met="4" type="+-">De blijdschap, die w' in u <rhyme label="a" type="f" corresp="#s11:l1">genieten</rhyme>,</l>
        <l id="s11:l4" met="4" type="+-">Verleen' ons moet, en maak' ons <rhyme label="b" type="m" corresp="#s11:l2">sterk</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Fontein van alle vreugt en <rhyme label="a" type="f">soetheit</rhyme>,</l>
        <l id="s12:l2" met="4" type="+-">Verwerp ons niet om elke <rhyme label="b" type="m">feil</rhyme>.</l>
        <l id="s12:l3" met="4" type="+-">Heer, wy vertrouwen op uw <rhyme label="a" type="f" corresp="#s12:l1">goetheit</rhyme>:</l>
        <l id="s12:l4" met="4" type="+-">Ons'hert verheugt sich in uw <rhyme label="b" type="m" corresp="#s12:l2">heil</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

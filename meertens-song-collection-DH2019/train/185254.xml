  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">O Ghy ionghe <rhyme label="a" type="m">Ieucht</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">Ionck en teer van <rhyme label="b" type="f">sinnen</rhyme>,</l>
        <l id="s1:l3" met="3" type="+-">Wilt ghy soete <rhyme label="a" type="m" corresp="#s1:l1">vreucht</rhyme></l>
        <l id="s1:l4" met="3" type="+-">In u hert <rhyme label="b" type="f" corresp="#s1:l2">gewinnen</rhyme>,</l>
        <l id="s1:l5" met="3" type="+-">Vliedt de <rhyme label="c" type="m">ydelheyt</rhyme>,</l>
        <l id="s1:l6" met="3" type="+-">En des werelts <rhyme label="d" type="f">wesen</rhyme>,</l>
        <l id="s1:l7" met="3" type="+-">Dieder veel <rhyme label="c" type="m" corresp="#s1:l5">verleyt</rhyme>,</l>
        <l id="s1:l8" met="3" type="+-">Soo wy sien en <rhyme label="d" type="f" corresp="#s1:l6">lesen</rhyme>,</l>
        <l id="s1:l9" met="3" type="+-">Voecht u herte <rhyme label="e" type="m">soet</rhyme>,</l>
        <l id="s1:l10" met="3" type="+-">Voor Godt in <rhyme label="e" type="m" corresp="#s1:l9">ootmoet</rhyme>,</l>
        <l id="s1:l11" met="4" type="+-">En ontfanght zijn soete <rhyme label="f" type="m">min</rhyme>,</l>
        <l id="s1:l12" met="3" type="+-">Met een stil <rhyme label="g" type="m">ghelaet</rhyme>,</l>
        <l id="s1:l13" met="3" type="+-">Vwe weghen <rhyme label="g" type="m" corresp="#s1:l12">gaet</rhyme>,</l>
        <l id="s1:l14" met="4" type="+-">Ter huys-deuren uyt en <rhyme label="f" type="m" corresp="#s1:l11">in</rhyme>,</l>
        <l id="s1:l15" met="3" type="+-">Wilt u wel <rhyme label="h" type="f">vercieren</rhyme>,</l>
        <l id="s1:l16" met="3" type="+-">Met goede <rhyme label="h" type="f" corresp="#s1:l15">manieren</rhyme>,</l>
        <l id="s1:l17" met="4" type="+-">Niet met kleeders vol van <rhyme label="i" type="m">pracht</rhyme>,</l>
        <l id="s1:l18" met="3" type="+-">Stil en <rhyme label="j" type="f">goedertieren</rhyme>,</l>
        <l id="s1:l19" met="3" type="+-">Wilt u soo <rhyme label="j" type="f" corresp="#s1:l18">regieren</rhyme>,</l>
        <l id="s1:l20" met="4" type="+-">Kont Godt altijt in ‘t <rhyme label="i" type="m" corresp="#s1:l17">gedacht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Hoort ghy ydel <rhyme label="a" type="m">praet</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">Wilt u tonghe <rhyme label="b" type="f">dwinghen</rhyme>,</l>
        <l id="s2:l3" met="3" type="+-">Alleen gade <rhyme label="a" type="m" corresp="#s2:l1">slaet</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">V bevolen <rhyme label="b" type="f" corresp="#s2:l2">dingen</rhyme>,</l>
        <l id="s2:l5" met="3" type="+-">Menich wert <rhyme label="c" type="m">verleyt</rhyme>,</l>
        <l id="s2:l6" met="3" type="+-">Door ‘t gehoor van <rhyme label="d" type="f">sonden</rhyme>,</l>
        <l id="s2:l7" met="3" type="+-">Wiens <rhyme label="c" type="m" corresp="#s2:l5">Gods-diensticheyt</rhyme></l>
        <l id="s2:l8" met="3" type="+-">Ydel wert <rhyme label="d" type="f" corresp="#s2:l6">bevonden</rhyme>.</l>
        <l id="s2:l9" met="3" type="+-">Dus o lieve <rhyme label="e" type="m">jeucht</rhyme>!</l>
        <l id="s2:l10" met="3" type="+-">Schickt u tot de <rhyme label="e" type="m" corresp="#s2:l9">deucht</rhyme>,</l>
        <l id="s2:l11" met="4" type="+-">Christi jock en is niet <rhyme label="f" type="m">swaer</rhyme>,</l>
        <l id="s2:l12" met="3" type="+-">’t Maeckt de ziel <rhyme label="g" type="m">verheucht</rhyme>,</l>
        <l id="s2:l13" met="3" type="+-">Liefde, vreed’ en <rhyme label="g" type="m" corresp="#s2:l12">vreucht</rhyme></l>
        <l id="s2:l14" met="4" type="+-">Wertmen in ‘t ghemoet <rhyme label="f" type="m" corresp="#s2:l11">gewaer</rhyme>,</l>
        <l id="s2:l15" met="3" type="+-">Wijsheyt sal u <rhyme label="h" type="f">leyden</rhyme>,</l>
        <l id="s2:l16" met="3" type="+-">In de groene <rhyme label="h" type="f" corresp="#s2:l15">weyden</rhyme>,</l>
        <l id="s2:l17" met="4" type="+-">Godt sal u met gunst <rhyme label="i" type="m">aensien</rhyme>,</l>
        <l id="s2:l18" met="3" type="+-">En u wel <rhyme label="j" type="f">bereyden</rhyme>,</l>
        <l id="s2:l19" met="3" type="+-">Al u <rhyme label="j" type="f" corresp="#s2:l18">nodigheyden</rhyme>,</l>
        <l id="s2:l20" met="4" type="+-">Wat ghy wilt sal u <rhyme label="i" type="m" corresp="#s2:l17">geschien</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Maer <rhyme label="a" type="m">insonderheyt</rhyme></l>
        <l id="s3:l2" met="3" type="+-">Wilt u Ouders <rhyme label="b" type="f">eeren</rhyme></l>
        <l id="s3:l3" met="3" type="+-">Met <rhyme label="a" type="m" corresp="#s3:l1">ghehoorsaemheyt</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">Dat is Gods <rhyme label="b" type="f" corresp="#s3:l2">begeeren</rhyme>.</l>
        <l id="s3:l5" met="3" type="+-">Wat men u <rhyme label="c" type="m">ghebiet</rhyme></l>
        <l id="s3:l6" met="3" type="+-">Doet dat stil en <rhyme label="d" type="f">veerdich</rhyme>,</l>
        <l id="s3:l7" met="3" type="+-">Murmereert doch <rhyme label="c" type="m" corresp="#s3:l5">niet</rhyme>,</l>
        <l id="s3:l8" met="3" type="+-">Of ghy wort <rhyme label="d" type="f" corresp="#s3:l6">onweerdich</rhyme></l>
        <l id="s3:l9" met="3" type="+-">Haren segen <rhyme label="e" type="m">soet</rhyme>,</l>
        <l id="s3:l10" met="3" type="+-">Siet wat Iesus <rhyme label="e" type="m" corresp="#s3:l9">doet</rhyme></l>
        <l id="s3:l11" met="4" type="+-">Binnen Nazareth die <rhyme label="f" type="m">stadt</rhyme>,</l>
        <l id="s3:l12" met="3" type="+-">Hy was <rhyme label="g" type="m">onderdaen</rhyme></l>
        <l id="s3:l13" met="3" type="+-">Sijn ouders <rhyme label="g" type="m" corresp="#s3:l12">vermaen</rhyme>,</l>
        <l id="s3:l14" met="4" type="+-">Als hem was bevolen <rhyme label="f" type="m" corresp="#s3:l11">wat</rhyme>,</l>
        <l id="s3:l15" met="3" type="+-">Siet den Heer der <rhyme label="h" type="f">Heeren</rhyme>,</l>
        <l id="s3:l16" met="3" type="+-">Heeft u comen <rhyme label="h" type="f" corresp="#s3:l15">leeren</rhyme>,</l>
        <l id="s3:l17" met="4" type="+-">Hoe ghy sult gehoorsaem <rhyme label="i" type="m">zijn</rhyme>,</l>
        <l id="s3:l18" met="3" type="+-">Wilt u tot hem <rhyme label="j" type="f">keeren</rhyme>,</l>
        <l id="s3:l19" met="3" type="+-">Sonder tegen <rhyme label="j" type="f" corresp="#s3:l18">weeren</rhyme>,</l>
        <l id="s3:l20" met="4" type="+-">Soo wert ghy bevrijt van <rhyme label="i" type="m" corresp="#s3:l17">pijn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">Comt u cruys <rhyme label="a" type="m">ontrent</rhyme>,</l>
        <l id="s4:l2" met="3" type="+-">Troost sult ghy <rhyme label="b" type="f">bevinden</rhyme>,</l>
        <l id="s4:l3" met="3" type="+-">Als ghy tot Godt <rhyme label="a" type="m" corresp="#s4:l1">went</rhyme>,</l>
        <l id="s4:l4" met="3" type="+-">Hy sal u <rhyme label="b" type="f" corresp="#s4:l2">ontbinden</rhyme>,</l>
        <l id="s4:l5" met="3" type="+-">Soet is zijn <rhyme label="c" type="m">aenschijn</rhyme></l>
        <l id="s4:l6" met="3" type="+-">Dat ghy sult <rhyme label="d" type="f">aenschouwen</rhyme>,</l>
        <l id="s4:l7" met="3" type="+-">Met een herte <rhyme label="c" type="m" corresp="#s4:l5">fijn</rhyme>,</l>
        <l id="s4:l8" met="3" type="+-">Door een goet <rhyme label="d" type="f" corresp="#s4:l6">betrouwen</rhyme>.</l>
        <l id="s4:l9" met="3" type="+-">Wort ghy hier <rhyme label="e" type="m">versmaet</rhyme>,</l>
        <l id="s4:l10" met="3" type="+-">Van de werelt <rhyme label="e" type="m" corresp="#s4:l9">quaet</rhyme>,</l>
        <l id="s4:l11" met="4" type="+-">Om dat ghy van haer <rhyme label="f" type="m">afwent</rhyme>,</l>
        <l id="s4:l12" met="3" type="+-">Godt comt u te <rhyme label="g" type="m">baet</rhyme></l>
        <l id="s4:l13" met="3" type="+-">Met zijn goeden <rhyme label="g" type="m" corresp="#s4:l12">raet</rhyme>,</l>
        <l id="s4:l14" met="4" type="+-">Dien hy u in ‘t herte <rhyme label="f" type="m" corresp="#s4:l11">sent</rhyme>,</l>
        <l id="s4:l15" met="3" type="+-">En hy sal u <rhyme label="h" type="f">geven</rhyme></l>
        <l id="s4:l16" met="3" type="+-">Namaels ‘t eeuwich <rhyme label="h" type="f" corresp="#s4:l15">leven</rhyme>,</l>
        <l id="s4:l17" met="4" type="+-">Met een overschoon <rhyme label="i" type="m">jolijt</rhyme>:</l>
        <l id="s4:l18" met="3" type="+-">Moet ghy nu wat <rhyme label="j" type="f">sweven</rhyme>,</l>
        <l id="s4:l19" met="3" type="+-">Dan wort ghy <rhyme label="j" type="f" corresp="#s4:l18">verheven</rhyme>,</l>
        <l id="s4:l20" met="4" type="+-">En van Godt <rhyme label="i" type="m" corresp="#s4:l17">ghebenedijt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

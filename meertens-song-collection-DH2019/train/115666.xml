  <author>Claes Stapel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">ALs gy 't kristalijne <rhyme label="a" type="m">nat</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Uit een diepen put wild <rhyme label="b" type="f">haalen</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Moet gy eerst, om zulk een <rhyme label="a" type="m" corresp="#s1:l1">schat</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Uwen emmer laaten <rhyme label="b" type="f" corresp="#s1:l2">daalen</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Dan zal zy uw vlijt <rhyme label="b" type="f" corresp="#s1:l2">betaalen</rhyme>.</l>
        <l id="s1:l6" met="4" type="+-">Die, ootmoedig in zijn <rhyme label="c" type="m">grond</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Wijzlijk graafd naa zuiv're <rhyme label="d" type="f">zeeden</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Vindz' in haar <rhyme label="d" type="f" corresp="#s1:l7">vol-koomentheeden</rhyme>,</l>
        <l id="s1:l9" met="4" type="+-">Naa den eis van Gods <rhyme label="c" type="m" corresp="#s1:l6">verbond</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Hoe de zonne klaarder <rhyme label="a" type="m">ligt</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Met haar glans van groot <rhyme label="b" type="f">vermoogen</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Hoe veel meer zy ons <rhyme label="a" type="m" corresp="#s2:l1">gezigt</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Houd ter aarde neer <rhyme label="b" type="f" corresp="#s2:l2">-geboogen</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Waarheid lijd geen aardz <rhyme label="b" type="f" corresp="#s2:l2">verhoogen</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Die haar klaarheid <rhyme label="c" type="m">onder-vind</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Moet, een-voudig in zijn <rhyme label="d" type="f">leeven</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Noit na staat of aan-zien <rhyme label="d" type="f" corresp="#s2:l7">streeven</rhyme></l>
        <l id="s2:l9" met="4" type="+-">Of hy ziet hem zelven <rhyme label="c" type="m" corresp="#s2:l6">blind</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Die een dier, 't welk, nood <rhyme label="a" type="m">getergd</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Grimd en raazd, door zachjens <rhyme label="b" type="f">spreeken</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Koesterd, en zig zoo <rhyme label="a" type="m" corresp="#s3:l1">verbergd</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Is 't gevaar zeer ligt <rhyme label="b" type="f" corresp="#s3:l2">ontweeken</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Die zig nimmer zoekt te <rhyme label="b" type="f" corresp="#s3:l2">wreeken</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Schoon hem leed word <rhyme label="c" type="m">aan-gedaan</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Og! Die mijd veel schaad en <rhyme label="d" type="f">smerte</rhyme>.</l>
        <l id="s3:l8" met="4" type="+-">Ootmoed uit een heilig <rhyme label="d" type="f" corresp="#s3:l7">herte</rhyme></l>
        <l id="s3:l9" met="4" type="+-">Brengd den Mensch veel voor-deel <rhyme label="c" type="m" corresp="#s3:l6">aan</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Een nog on-vol-wassen <rhyme label="a" type="m">kind</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Is een-voudig, <rhyme label="b" type="f">on-gesleepen</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">'t Heeft zijn voedster <rhyme label="a" type="m" corresp="#s4:l1">wel-gezind</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Zonder valz of quaade <rhyme label="b" type="f" corresp="#s4:l2">greepen</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">Die, door hoovaardy <rhyme label="b" type="f" corresp="#s4:l2">beneepen</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Zig verlaat op yd'len <rhyme label="c" type="m">schijn</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Doof in tijds zijn schaad'lijk <rhyme label="d" type="f">oordeel</rhyme>:</l>
        <l id="s4:l8" met="4" type="+-">Want by God heeft niemand <rhyme label="d" type="f" corresp="#s4:l7">voor-deel</rhyme></l>
        <l id="s4:l9" met="4" type="+-">Dan die regte kind'ren <rhyme label="c" type="m" corresp="#s4:l6">zijn</rhyme>.</l>
      </lg>
    </lg>
  </text>

  <author>Albertus Buitendyck</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Jesu, om ons te <rhyme label="a" type="f">bevrijden</rhyme></l>
        <l id="s1:l2" met="3" type="+-">Van de helsche <rhyme label="b" type="m">pijn</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Ghy moet veel tormenten <rhyme label="a" type="f" corresp="#s1:l1">lijden</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">Wy misdadigh <rhyme label="b" type="m" corresp="#s1:l2">zijn</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">Als ghy, mijn Godt, zijt <rhyme label="c" type="f">gekomen</rhyme></l>
        <l id="s1:l6" met="3" type="+-">In d' Olyven <rhyme label="d" type="m">Hof</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Waerachtigh bloet siet men <rhyme label="c" type="f" corresp="#s1:l5">stroomen</rhyme>,</l>
        <l id="s1:l8" met="3" type="+-">Van uw' leden <rhyme label="d" type="m" corresp="#s1:l6">of</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Judas heeft u aen de <rhyme label="a" type="f">Ioden</rhyme></l>
        <l id="s2:l2" met="3" type="+-">Als een Beest <rhyme label="b" type="m">verkocht</rhyme>.</l>
        <l id="s2:l3" met="4" type="+-">Om uw' te slaen, of te <rhyme label="a" type="f" corresp="#s2:l1">dooden</rhyme></l>
        <l id="s2:l4" met="3" type="+-">Heeft uw' <rhyme label="b" type="m" corresp="#s2:l2">op-gesocht</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Met een kus zijt ghy <rhyme label="c" type="f">verraden</rhyme>.</l>
        <l id="s2:l6" met="3" type="+-">Als de booste <rhyme label="d" type="m">gast</rhyme></l>
        <l id="s2:l7" met="4" type="+-">Zijt ghy om onse <rhyme label="c" type="f" corresp="#s2:l5">misdaden</rhyme></l>
        <l id="s2:l8" met="3" type="+-">Gebonden seer <rhyme label="d" type="m" corresp="#s2:l6">vast</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Daer na al d'Apostelen <rhyme label="a" type="f">scheyden</rhyme></l>
        <l id="s3:l2" met="3" type="+-">Van uw' Godes <rhyme label="b" type="m">Lam</rhyme>.</l>
        <l id="s3:l3" met="4" type="+-">Men siet uw' tot Annam <rhyme label="a" type="f" corresp="#s3:l1">leyden</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">Van daer tot <rhyme label="b" type="m" corresp="#s3:l2">Caypham</rhyme>:</l>
        <l id="s3:l5" met="4" type="+-">Men siet uw' sleepen en <rhyme label="c" type="f">trecken</rhyme></l>
        <l id="s3:l6" met="3" type="+-">Tot Pilatum <rhyme label="d" type="m">boos</rhyme>.</l>
        <l id="s3:l7" met="4" type="+-">Zijt geacht onder de <rhyme label="c" type="f" corresp="#s3:l5">gecken</rhyme></l>
        <l id="s3:l8" met="3" type="+-">Van Herodes <rhyme label="d" type="m" corresp="#s3:l6">loos</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Mijn Iesu! ghy zijt <rhyme label="a" type="f">gebonden</rhyme></l>
        <l id="s4:l2" met="3" type="+-">Vast aen een <rhyme label="b" type="m">Kalom</rhyme>;</l>
        <l id="s4:l3" met="4" type="+-">Laet u slaen om onse <rhyme label="a" type="f" corresp="#s4:l1">sonden</rhyme>,</l>
        <l id="s4:l4" met="3" type="+-">Om en <rhyme label="b" type="m" corresp="#s4:l2">wederom</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">Geraeckt zijn met scherpe <rhyme label="c" type="f">roeden</rhyme></l>
        <l id="s4:l6" met="3" type="+-">Al uw' leden <rhyme label="d" type="m">teer</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Al uw' leden soo seer <rhyme label="c" type="f" corresp="#s4:l5">bloeden</rhyme></l>
        <l id="s4:l8" met="3" type="+-">'t Vloeyt op d'aerde <rhyme label="d" type="m" corresp="#s4:l6">neer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Van Doorens vlechten, en <rhyme label="a" type="f">maken</rhyme></l>
        <l id="s5:l2" met="3" type="+-">Voor uw' eene <rhyme label="b" type="m">Kroon</rhyme>;</l>
        <l id="s5:l3" met="4" type="+-">Die 't Vel, Vleesch en Hersens <rhyme label="a" type="f" corresp="#s5:l1">raken</rhyme>.</l>
        <l id="s5:l4" met="3" type="+-">Stellen uw' ten <rhyme label="b" type="m" corresp="#s5:l2">toon</rhyme></l>
        <l id="s5:l5" met="4" type="+-">Met een purper kleet tot <rhyme label="c" type="f">schanden</rhyme>,</l>
        <l id="s5:l6" met="3" type="+-">En een buygent <rhyme label="d" type="m">Riet</rhyme></l>
        <l id="s5:l7" met="4" type="+-">In uwe gebonden <rhyme label="c" type="f" corresp="#s5:l5">handen</rhyme></l>
        <l id="s5:l8" met="3" type="+-">Roepen, de Mensch <rhyme label="d" type="m" corresp="#s5:l6">siet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Soo gekroont, en heel <rhyme label="a" type="f">geslagen</rhyme>,</l>
        <l id="s6:l2" met="3" type="+-">Ghy moet 't lastigh <rhyme label="b" type="m">kruys</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Een moeyelijcke wegh <rhyme label="a" type="f" corresp="#s6:l1">dragen</rhyme>:</l>
        <l id="s6:l4" met="3" type="+-">Doe noch Ioodts <rhyme label="b" type="m" corresp="#s6:l2">gespuys</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Uw', mijn Iesu, slaen en <rhyme label="c" type="f">treden</rhyme>,</l>
        <l id="s6:l6" met="3" type="+-">Soo dat weer uw' <rhyme label="d" type="m">Bloedt</rhyme></l>
        <l id="s6:l7" met="4" type="+-">Sprongh uyt uw' hooft ende <rhyme label="c" type="f" corresp="#s6:l5">leden</rhyme>.</l>
        <l id="s6:l8" met="3" type="+-">Yder smart u <rhyme label="d" type="m" corresp="#s6:l6">doet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Uw' aengebacke <rhyme label="a" type="f">kleederen</rhyme></l>
        <l id="s7:l2" met="3" type="+-">Trecken uyt met <rhyme label="b" type="m">kracht</rhyme>;</l>
        <l id="s7:l3" met="4" type="+-">Soo seer uw' pijn <rhyme label="a" type="f" corresp="#s7:l1">vermeerderen</rhyme>;</l>
        <l id="s7:l4" met="3" type="+-">Van pijn ghy meest <rhyme label="b" type="m" corresp="#s7:l2">smacht</rhyme>.</l>
        <l id="s7:l5" met="4" type="+-">Uw' leden sonder <rhyme label="c" type="f">medogen</rhyme></l>
        <l id="s7:l6" met="3" type="+-">Zijnen <rhyme label="d" type="m">uyt-gereckt</rhyme>,</l>
        <l id="s7:l7" met="4" type="+-">Gelijck een pees op de <rhyme label="c" type="f" corresp="#s7:l5">boge</rhyme>:</l>
        <l id="s7:l8" met="3" type="+-">Yder met u <rhyme label="d" type="m" corresp="#s7:l6">geckt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">d' Alderwreetste <rhyme label="a" type="f">hamer-slagen</rhyme></l>
        <l id="s8:l2" met="3" type="+-">Stompe Nagels <rhyme label="b" type="m">al</rhyme></l>
        <l id="s8:l3" met="4" type="+-">Door handen en voeten <rhyme label="a" type="f" corresp="#s8:l1">jagen</rhyme>.</l>
        <l id="s8:l4" met="3" type="+-">Ick 't verhale <rhyme label="b" type="m" corresp="#s8:l2">sal</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Uw' pijn, als ghy zijt <rhyme label="c" type="f">verheven</rhyme>?</l>
        <l id="s8:l6" met="3" type="+-">Alles borst en <rhyme label="d" type="m">scheurt</rhyme>:</l>
        <l id="s8:l7" met="4" type="+-">Hierom, al dat maer had <rhyme label="c" type="f" corresp="#s8:l5">leven</rhyme>,</l>
        <l id="s8:l8" met="3" type="+-">Met de aerde <rhyme label="d" type="m" corresp="#s8:l6">treurt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Moeder Godts, ghy siet de <rhyme label="a" type="f">leden</rhyme></l>
        <l id="s9:l2" met="3" type="+-">Van uw' Soon vol <rhyme label="b" type="m">smart</rhyme>;</l>
        <l id="s9:l3" met="4" type="+-">Hier door wordt geheel <rhyme label="a" type="f" corresp="#s9:l1">door-sneden</rhyme></l>
        <l id="s9:l4" met="3" type="+-">Uw' Moederlijck <rhyme label="b" type="m" corresp="#s9:l2">Hart</rhyme>.</l>
        <l id="s9:l5" met="4" type="+-">Ghy siet en denckt in u <rhyme label="c" type="f">herte</rhyme>,</l>
        <l id="s9:l6" met="3" type="+-">Dat sin liefde <rhyme label="d" type="m">groot</rhyme>,</l>
        <l id="s9:l7" met="4" type="+-">Wordt betaelt met duysent <rhyme label="c" type="f" corresp="#s9:l5">smerte</rhyme>,</l>
        <l id="s9:l8" met="3" type="+-">Ia, met d'wreedtste <rhyme label="d" type="m" corresp="#s9:l6">doodt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Laet ons vliegen als de <rhyme label="a" type="f">Bye</rhyme></l>
        <l id="s10:l2" met="3" type="+-">Tot sijn wonden <rhyme label="b" type="m">root</rhyme>;</l>
        <l id="s10:l3" met="4" type="+-">Bedencken met <rhyme label="a" type="f" corresp="#s10:l1">medelye</rhyme></l>
        <l id="s10:l4" met="3" type="+-">Iesu lijden <rhyme label="b" type="m" corresp="#s10:l2">groot</rhyme>.</l>
        <l id="s10:l5" met="4" type="+-">Laet ons noyt, noyt meer <rhyme label="c" type="f">begeven</rhyme>,</l>
        <l id="s10:l6" met="3" type="+-">Tot eenigh werck <rhyme label="d" type="m">quaedt</rhyme>;</l>
        <l id="s10:l7" met="4" type="+-">Sonden schouwen al ons <rhyme label="c" type="f" corresp="#s10:l5">leven</rhyme>,</l>
        <l id="s10:l8" met="3" type="+-">Goedt doen na Godts <rhyme label="d" type="m" corresp="#s10:l6">raedt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Jesu, onse Heer der <rhyme label="a" type="f">Heeren</rhyme>,</l>
        <l id="s11:l2" met="3" type="+-">Waerde <rhyme label="b" type="m">Pellicaen</rhyme>!</l>
        <l id="s11:l3" met="4" type="+-">Wilt ons al tot uw' <rhyme label="a" type="f" corresp="#s11:l1">bekeeren</rhyme>,</l>
        <l id="s11:l4" met="3" type="+-">En van 't quaedt <rhyme label="b" type="m" corresp="#s11:l2">ontslaen</rhyme>.</l>
        <l id="s11:l5" met="4" type="+-">Door uwe bloedige <rhyme label="c" type="f">plassen</rhyme>.</l>
        <l id="s11:l6" met="3" type="+-">Wilt, Ã´ Godes <rhyme label="d" type="m">Soon</rhyme>!</l>
        <l id="s11:l7" met="4" type="+-">Al onse sonden <rhyme label="c" type="f" corresp="#s11:l5">af-wasschen</rhyme>;</l>
        <l id="s11:l8" met="3" type="+-">Houdt ons altijdt <rhyme label="d" type="m" corresp="#s11:l6">schoon</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Ghy hebt al uw' bloet <rhyme label="a" type="f">vergoten</rhyme>,</l>
        <l id="s12:l2" met="3" type="+-">Voor ons Menschen <rhyme label="b" type="m">quaedt</rhyme>;</l>
        <l id="s12:l3" met="4" type="+-">Ey! wilt ons doch niet <rhyme label="a" type="f" corresp="#s12:l1">verstooten</rhyme>,</l>
        <l id="s12:l4" met="3" type="+-">Noch noyt ons <rhyme label="b" type="m" corresp="#s12:l2">verlaet</rhyme>.</l>
        <l id="s12:l5" met="4" type="+-">Wilt o Iesu! Heer der <rhyme label="c" type="f">Heeren</rhyme></l>
        <l id="s12:l6" met="3" type="+-">Door uw' liefde <rhyme label="d" type="m">brandt</rhyme>,</l>
        <l id="s12:l7" met="4" type="+-">Daer na ons alle <rhyme label="c" type="f" corresp="#s12:l5">vereeren</rhyme></l>
        <l id="s12:l8" met="3" type="+-">'s Hemels <rhyme label="d" type="m" corresp="#s12:l6">Vaderlandt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

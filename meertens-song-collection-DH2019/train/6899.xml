    <melody>Christe qui lux es et dies</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Christe die ghy sijt dagh en <rhyme label="a" type="m">licht</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Voor u is Heer verborgen <rhyme label="a" type="m" corresp="#s1:l1">nicht</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Ghy wort gelooft des lichts <rhyme label="b" type="m">claerheyt</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Die ons een salich licht <rhyme label="b" type="m" corresp="#s1:l3">verbreyt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">O heylich Heer wy bidden <rhyme label="a" type="m">u</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">In desen nacht beschermt ons <rhyme label="a" type="m" corresp="#s2:l1">nu</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Laet ons in u toch rusten <rhyme label="b" type="m">sacht</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Verleent ons een gerusten <rhyme label="b" type="m" corresp="#s2:l3">nacht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Op dat ’t herte niet te swaer en <rhyme label="a" type="m">slaept</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Of den vyant ons niet <rhyme label="a" type="m" corresp="#s3:l1">betraept</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Noch ‘tvleys hem geen consent en <rhyme label="b" type="m">geeft</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Dattet voor u niet schuldich <rhyme label="b" type="m" corresp="#s3:l3">leeft</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ons oogen laet doch slapen <rhyme label="a" type="m">vry</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">T’hert laet altijt waken tot <rhyme label="a" type="m" corresp="#s4:l1">dy</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">V rechter handt bescherme <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">V dienaers die u minnen <rhyme label="b" type="m" corresp="#s4:l3">seer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Beschermer Heer aensiet ons <rhyme label="a" type="m">doch</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Den vyant wilt bedwingen <rhyme label="a" type="m" corresp="#s5:l1">noch</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Regiert u dienaers Heere <rhyme label="b" type="m">goet</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Die ghy gekocht hebt door u <rhyme label="b" type="m" corresp="#s5:l3">bloet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Sijt ons gedachtich al <rhyme label="a" type="m">gelijck</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">In dit swaer lichaem, arm en <rhyme label="a" type="m" corresp="#s6:l1">rijck</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Die der sielen beschermer <rhyme label="b" type="m">sijt</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Heer staet ons by in onsen <rhyme label="b" type="m" corresp="#s6:l3">strijt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Eer sy den Vader in den <rhyme label="a" type="m">throon</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">En Iesu Christ sijn lieven <rhyme label="a" type="m" corresp="#s7:l1">Soon</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Versamelt met den heyligen <rhyme label="b" type="m">Geest</rhyme></l>
        <l id="s7:l4" met="4" type="-+">En een eewich Godt soo men <rhyme label="b" type="m" corresp="#s7:l3">leest</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <author>Dirk Rafaelsz. Camphuysen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">GOdt-waerts ging mijn roep en <rhyme label="a" type="f">reden</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">En hy gaff gehoor ter <rhyme label="a" type="f" corresp="#s1:l1">beden</rhyme>:</l>
        <l id="s1:l3" met="4" type="+-">Dies ick hem ten toevlucht <rhyme label="b" type="m">nam</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Doe my bangheydt <rhyme label="b" type="m" corresp="#s1:l3">over-quam</rhyme></l>
        <l id="s1:l5" met="4" type="+-">’kLiet mijn handen heele <rhyme label="c" type="f">nachten</rhyme></l>
        <l id="s1:l6" met="4" type="+-">(’tLichaem volcht des herts <rhyme label="c" type="f" corresp="#s1:l5">gedachten</rhyme>)</l>
        <l id="s1:l7" met="4" type="+-">Even strack ten hemel <rhyme label="d" type="m">gaen</rhyme>.</l>
        <l id="s1:l8" met="4" type="+-">’tHert wou’ tot geen troost <rhyme label="d" type="m" corresp="#s1:l7">verstaen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">’kDacht aen Godt, en was <rhyme label="a" type="f">onrustigh</rhyme>:</l>
        <l id="s2:l2" met="4" type="+-">’tWarr’-denck hiel’ mijn geest <rhyme label="a" type="f" corresp="#s2:l1">onlustigh</rhyme>.</l>
        <l id="s2:l3" met="4" type="+-">D’oogen-leden misten <rhyme label="b" type="m">vaeck</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">’tLijff sijn standt, de tong haer <rhyme label="b" type="m" corresp="#s2:l3">spraeck</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">’kDacht aen d’eerst’, al oude <rhyme label="c" type="f">jaren</rhyme>.</l>
        <l id="s2:l6" met="4" type="+-">’tSoet gehommel mijner <rhyme label="c" type="f" corresp="#s2:l5">snaren</rhyme></l>
        <l id="s2:l7" met="4" type="+-">Quam my voor in stillen <rhyme label="d" type="m">nacht</rhyme>.</l>
        <l id="s2:l8" met="4" type="+-">Alles heeft mijn <rhyme label="d" type="m" corresp="#s2:l7">geest-doordacht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Sal dan Godt (dus viel mijn <rhyme label="a" type="f">reden</rhyme>)</l>
        <l id="s3:l2" met="4" type="+-">Sal dan Godt in <rhyme label="a" type="f" corresp="#s3:l1">eeuwicheden</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Sich vervreemden, en niet <rhyme label="b" type="m">meer</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Wesen ’tgeen hy was wel <rhyme label="b" type="m" corresp="#s3:l3">eer</rhyme>?</l>
        <l id="s3:l5" met="4" type="+-">Heeft sijn goedtheydt <rhyme label="c" type="f">affgelaten</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Sonder immer sich <rhyme label="c" type="f" corresp="#s3:l5">t’her-vaten</rhyme>?</l>
        <l id="s3:l7" met="4" type="+-">Is dan alle Godt-spraeck <rhyme label="d" type="m">uyt</rhyme></l>
        <l id="s3:l8" met="4" type="+-">En in eeuwicheydt <rhyme label="d" type="m" corresp="#s3:l7">gestuyt</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Heeft Godt goedt te zijn <rhyme label="a" type="f">vergeten</rhyme></l>
        <l id="s4:l2" met="4" type="+-">En gena’ met toorn <rhyme label="a" type="f" corresp="#s4:l1">om-smeten</rhyme>?</l>
        <l id="s4:l3" met="4" type="+-">Neen, mijn ziel (dus dacht ick <rhyme label="b" type="m">we’er</rhyme>)</l>
        <l id="s4:l4" met="4" type="+-">Lijdt ghy nu, ’theeft haest een <rhyme label="b" type="m" corresp="#s4:l3">keer</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">’sHooghsten handt bepaelt de <rhyme label="c" type="f">stonden</rhyme>.</l>
        <l id="s4:l6" met="4" type="+-">’kSal des Heeren doen <rhyme label="c" type="f" corresp="#s4:l5">door-gronden</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">En wat hy oyt groots <rhyme label="d" type="m">bestond</rhyme></l>
        <l id="s4:l8" met="4" type="+-">Plaetsen in mijn hert en <rhyme label="d" type="m" corresp="#s4:l7">mondt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Heyligh, Godt, zijn uwe <rhyme label="a" type="f">wegen</rhyme>.</l>
        <l id="s5:l2" met="4" type="+-">Waer is Godtheydt die sich <rhyme label="a" type="f" corresp="#s5:l1">tegen</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Vwe grootheyt <rhyme label="b" type="m">vergelijck</rhyme>?</l>
        <l id="s5:l4" met="4" type="+-">Wonder doet gh’. En sterckheydts <rhyme label="b" type="m" corresp="#s5:l3">blijck</rhyme></l>
        <l id="s5:l5" met="4" type="+-">Gaeft ghy d’Heyd’nen in <rhyme label="c" type="f">voortijden</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Doe gh’uw’ volck (’tzaedt Iacobs) <rhyme label="c" type="f" corresp="#s5:l5">vrijden</rhyme>.</l>
        <l id="s5:l7" met="4" type="+-">’tAll’-door-treffend <rhyme label="d" type="m">Godt-geweldt</rhyme></l>
        <l id="s5:l8" met="4" type="+-">Heeft de heel natuyr <rhyme label="d" type="m" corresp="#s5:l7">ontstelt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Hemel, aerde, lucht, en <rhyme label="a" type="f">water</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Steende, dreunde, gaff <rhyme label="a" type="f" corresp="#s6:l1">geklater</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Schrickte, blickte, gaff <rhyme label="b" type="m">gebrom</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Kraeckte, blaeckte om end’ <rhyme label="b" type="m" corresp="#s6:l3">om</rhyme>.</l>
        <l id="s6:l5" met="4" type="+-">Zee en stercke <rhyme label="c" type="f">water-stroomen</rhyme></l>
        <l id="s6:l6" met="4" type="+-">(Wie heeft daer oyt wegh <rhyme label="c" type="f" corresp="#s6:l5">vernomen</rhyme>?)</l>
        <l id="s6:l7" met="4" type="+-">Waren u een effen <rhyme label="d" type="m">padt</rhyme>,</l>
        <l id="s6:l8" met="4" type="+-">Dat ghy met u volck <rhyme label="d" type="m" corresp="#s6:l7">betradt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Moses leyder en <rhyme label="a" type="f">behoeder</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">En Aaron sijnen <rhyme label="a" type="f" corresp="#s7:l1">broeder</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Sachmen door het woeste <rhyme label="b" type="m">kolck</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Des Roo-meer treen met u <rhyme label="b" type="m" corresp="#s7:l3">volck</rhyme>.</l>
        <l id="s7:l5" met="4" type="+-">Als een Herder langs der <rhyme label="c" type="f">heyden</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Gaet een kudde schapen <rhyme label="c" type="f" corresp="#s7:l5">weyden</rhyme>,</l>
        <l id="s7:l7" met="4" type="+-">Soo bracht ghy door deser <rhyme label="d" type="m">handt</rhyme></l>
        <l id="s7:l8" met="4" type="+-">V volck in’t beloofde <rhyme label="d" type="m" corresp="#s7:l7">landt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

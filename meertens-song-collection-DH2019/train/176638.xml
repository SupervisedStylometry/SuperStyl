  <author>Hendrik Rintjes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Die als nieuwe <rhyme label="a" type="f">creatuyren</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Met Christo zijn <rhyme label="b" type="f">verresen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Dat eeuwich sal <rhyme label="a" type="f" corresp="#s1:l1">gheduyren</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Wilt dat soeckende <rhyme label="b" type="f" corresp="#s1:l2">wesen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Wat aertsch is, dient <rhyme label="b" type="f" corresp="#s1:l2">mispresen</rhyme>:</l>
        <l id="s1:l6" met="3" type="-+">Binnen ‘t swerelts <rhyme label="c" type="m">woestijn</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Ghy Christenen by <rhyme label="b" type="f" corresp="#s1:l2">desen</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Mijdt allen boosen <rhyme label="c" type="m" corresp="#s1:l6">schijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Al wat boos is in ‘t <rhyme label="a" type="f">schijnen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">‘t Zy woorden ofte <rhyme label="b" type="f">wercken</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Dat moet gheheel <rhyme label="a" type="f" corresp="#s2:l1">verdwijnen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Door ‘t Heylighs Gheest <rhyme label="b" type="f" corresp="#s2:l2">verstercken</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">Dus wilt neerstelijck <rhyme label="b" type="f" corresp="#s2:l2">mercken</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Op de ghebreken <rhyme label="c" type="m">dijn</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Ende voor leecken en <rhyme label="b" type="f" corresp="#s2:l2">klercken</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Mijdt allen boosen <rhyme label="c" type="m" corresp="#s2:l6">schijn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Van alle onnutte <rhyme label="a" type="f">woorden</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Moet men reeckenschap <rhyme label="b" type="f">gheven</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">De Christenen <rhyme label="a" type="f" corresp="#s3:l1">behoorden</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Dies voorsichtigh te <rhyme label="b" type="f" corresp="#s3:l2">leven</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">En simpele <rhyme label="b" type="f" corresp="#s3:l2">beseven</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Trecken aen eenen <rhyme label="c" type="m">lijn</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Hierom vrienden <rhyme label="b" type="f" corresp="#s3:l2">verheven</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Mijdt allen boosen <rhyme label="c" type="m" corresp="#s3:l6">schijn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ydelen klap <rhyme label="a" type="f">onweerdigh</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Haet Godt in allen <rhyme label="b" type="f">dinghen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Daer af moetmen <rhyme label="a" type="f" corresp="#s4:l1">boetveerdich</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Ons Tonghe neerstigh <rhyme label="b" type="f" corresp="#s4:l2">dwinghen</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">En eer wy klap <rhyme label="b" type="f" corresp="#s4:l2">voort-brengehen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Die woorden fout en <rhyme label="c" type="m">sijn</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Dus Ouders <rhyme label="b" type="f" corresp="#s4:l2">Ionghelinghen</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Mijdt allen boosen <rhyme label="c" type="m" corresp="#s4:l6">schijn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Den boosen schijn kleyn <rhyme label="a" type="f">achten</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Brenght in der zielen <rhyme label="b" type="f">schade</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Hierom sullen wy <rhyme label="a" type="f" corresp="#s5:l1">wachten</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Van al dat streckt tot <rhyme label="b" type="f" corresp="#s5:l2">quade</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Ende oprecht van <rhyme label="b" type="f" corresp="#s5:l2">dade</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Voor alle menschen <rhyme label="c" type="m">zijn</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Dus vrienden vroech en <rhyme label="b" type="f" corresp="#s5:l2">spade</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Mijdt allen boosen <rhyme label="c" type="m" corresp="#s5:l6">schijn</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Want wy aderkens <rhyme label="a" type="f">blijcken</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Van des levens <rhyme label="b" type="f">Fonteyne</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Wat bitter is moet <rhyme label="a" type="f" corresp="#s6:l1">wijcken</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">En ‘t soet waterken <rhyme label="b" type="f" corresp="#s6:l2">reyne</rhyme>:</l>
        <l id="s6:l5" met="3" type="-+">Dat vloeyen moet <rhyme label="b" type="f" corresp="#s6:l2">alleyne</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Uyt ons, in elck <rhyme label="c" type="m">termijn</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Hierom voor groot en <rhyme label="b" type="f" corresp="#s6:l2">kleyne</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Mijdt allen boosen <rhyme label="c" type="m" corresp="#s6:l6">schijn</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Wat boosen schijn is <rhyme label="a" type="f">vonden</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Kan ons ‘t salven wel <rhyme label="b" type="f">leeren</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Van den oorspronck der <rhyme label="a" type="f" corresp="#s7:l1">zonden</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Ons selven af te <rhyme label="b" type="f" corresp="#s7:l2">keeren</rhyme>:</l>
        <l id="s7:l5" met="3" type="-+">Hierom ghy volck des <rhyme label="b" type="f" corresp="#s7:l2">Heeren</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Menght gheen water met <rhyme label="c" type="m">Wijn</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Maer als vaetkens ter <rhyme label="b" type="f" corresp="#s7:l2">eeren</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Mijdt allen boosen <rhyme label="c" type="m" corresp="#s7:l6">schijn</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Haestighe <rhyme label="a" type="f">toornichede</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Ofte lichtveerdigh <rhyme label="b" type="f">spreecken</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Boerden en jocken <rhyme label="a" type="f" corresp="#s8:l1">mede</rhyme></l>
        <l id="s8:l4" met="3" type="-+">‘t Zijn al boose <rhyme label="b" type="f" corresp="#s8:l2">ghebreecken</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Voor hem die ‘t al sal <rhyme label="b" type="f" corresp="#s8:l2">wreken</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Hierom is de raet <rhyme label="c" type="m">fijn</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Dus eer ghy wert <rhyme label="b" type="f" corresp="#s8:l2">versteken</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Mijdt allen boosen <rhyme label="c" type="m" corresp="#s8:l6">schijn</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Des vleesch oude <rhyme label="a" type="f">kostuymen</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Die tot boosheden <rhyme label="b" type="f">strecken</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Die moet een Christen <rhyme label="a" type="f" corresp="#s9:l1">ruymen</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">En door ‘s Gheest kracht <rhyme label="b" type="f" corresp="#s9:l2">bedecken</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Niemandt tot quaet <rhyme label="b" type="f" corresp="#s9:l2">verwecken</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Waer uyt spruyt swaer <rhyme label="c" type="m">ghepijn</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Wilt ghy u niet <rhyme label="b" type="f" corresp="#s9:l2">bevlecken</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Mijdt allen boosen <rhyme label="c" type="m" corresp="#s9:l6">schijn</rhyme></l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Wat ons noch druckt ten <rhyme label="a" type="f">gronde</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">En maeckt een quade <rhyme label="b" type="f">fame</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Met d’aen-klevende <rhyme label="a" type="f" corresp="#s10:l1">sonde</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Dient af-gheleyt al <rhyme label="b" type="f" corresp="#s10:l2">t’same</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Dus Christenen <rhyme label="b" type="f" corresp="#s10:l2">bequame</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Ghelooft Schriftuyr <rhyme label="c" type="m">devijn</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Ende nae den <rhyme label="b" type="f" corresp="#s10:l2">betame</rhyme></l>
        <l id="s10:l8" met="3" type="-+">Mijdt allen boosen <rhyme label="c" type="m" corresp="#s10:l6">schijn</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Die in de kleynste <rhyme label="a" type="f">weghen</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Niet trouwigh toe-siet <rhyme label="b" type="f">nouwe</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Hoe sal hy dan ter <rhyme label="a" type="f" corresp="#s11:l1">deghen</rhyme></l>
        <l id="s11:l4" met="3" type="-+">In ‘t meeste zijn <rhyme label="b" type="f" corresp="#s11:l2">ghetrouwe</rhyme>?</l>
        <l id="s11:l5" met="3" type="-+">d’Ooghen Gods <rhyme label="b" type="f" corresp="#s11:l2">aenschouwe</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Zijn klaer als een <rhyme label="c" type="m">robijn</rhyme></l>
        <l id="s11:l7" met="3" type="-+">Hier by voor Mans en <rhyme label="b" type="f" corresp="#s11:l2">Vrouwe</rhyme>,</l>
        <l id="s11:l8" met="3" type="-+">Mijdt allen boosen <rhyme label="c" type="m" corresp="#s11:l6">schijn</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Gods vyer-vlammighe <rhyme label="a" type="f">ooghen</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Zijn so reyn t’allen <rhyme label="b" type="f">tijden</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Dar sy ‘t arch niet sien <rhyme label="a" type="f" corresp="#s12:l1">moghen</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Noch ‘t boose konnen <rhyme label="b" type="f" corresp="#s12:l2">lijden</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">Dus wilt ‘t herte <rhyme label="b" type="f" corresp="#s12:l2">besnijden</rhyme></l>
        <l id="s12:l6" met="3" type="-+">Van ‘t listighe <rhyme label="c" type="m">fenijn</rhyme>,</l>
        <l id="s12:l7" met="3" type="-+">En om eeuwich <rhyme label="b" type="f" corresp="#s12:l2">verblijden</rhyme>,</l>
        <l id="s12:l8" met="3" type="-+">Mijdt allen boosen <rhyme label="c" type="m" corresp="#s12:l6">schijn</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Ghemerckt dat Godt <rhyme label="a" type="f">almachtich</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Geen boosheyt kan <rhyme label="b" type="f">verdraghen</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Vrienden wandelt <rhyme label="a" type="f" corresp="#s13:l1">eendrachtich</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Recht of Gods ooghen ‘t <rhyme label="b" type="f" corresp="#s13:l2">saghen</rhyme>,</l>
        <l id="s13:l5" met="3" type="-+">Wilt u zonden <rhyme label="b" type="f" corresp="#s13:l2">beklaghen</rhyme></l>
        <l id="s13:l6" met="3" type="-+">Voor d’hooghste <rhyme label="c" type="m">Medecijn</rhyme>,</l>
        <l id="s13:l7" met="3" type="-+">End’ nae Pauli <rhyme label="b" type="f" corresp="#s13:l2">ghewaghen</rhyme></l>
        <l id="s13:l8" met="3" type="-+">Mijdt allen boosen <rhyme label="c" type="m" corresp="#s13:l6">schijn</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Om hier elck een te <rhyme label="a" type="f">stichten</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Doors Heylichs Geests <rhyme label="b" type="f">viertuyten</rhyme></l>
        <l id="s14:l3" met="3" type="-+">Als licht moeten wy <rhyme label="a" type="f" corresp="#s14:l1">lichten</rhyme></l>
        <l id="s14:l4" met="3" type="-+">Van binnen ende <rhyme label="b" type="f" corresp="#s14:l2">buyten</rhyme>,</l>
        <l id="s14:l5" met="3" type="-+">Duysterheyt moet in <rhyme label="b" type="f" corresp="#s14:l2">muyten</rhyme></l>
        <l id="s14:l6" met="3" type="-+">Blijven als bitter <rhyme label="c" type="m">sijn</rhyme></l>
        <l id="s14:l7" met="3" type="-+">Oorlof vrienden in ‘t <rhyme label="b" type="f" corresp="#s14:l2">sluyten</rhyme>,</l>
        <l id="s14:l8" met="3" type="-+">Mijdt allen boosen <rhyme label="c" type="m" corresp="#s14:l6">schijn</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

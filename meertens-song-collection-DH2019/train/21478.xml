    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ICk roepe v o Hemelsche Uader <rhyme label="a" type="m">aen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Wilt mijn ghelooue <rhyme label="b" type="f">stercken</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Op dat ick mach vromelick blijuen <rhyme label="a" type="m" corresp="#s1:l1">staen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Met v waerheyt <rhyme label="a" type="m" corresp="#s1:l1">aenghedaen</rhyme></l>
        <l id="s1:l5" met="5" type="-+">Al sonder af te gaen och wilt in my <rhyme label="b" type="f" corresp="#s1:l2">wercken</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">O Heere in den noot doet my <rhyme label="a" type="m">bystant</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Gheeft my mont om <rhyme label="b" type="f">spreken</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Ick ben hier in mijn vyanden <rhyme label="a" type="m" corresp="#s2:l1">hant</rhyme></l>
        <l id="s2:l4" met="3" type="-+">In den wreeden leuwen <rhyme label="a" type="m" corresp="#s2:l1">tant</rhyme></l>
        <l id="s2:l5" met="5" type="-+">U heylich woort playsant, doet my wt <rhyme label="b" type="f" corresp="#s2:l2">breken</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Mijn kracht is seer cleyn v Heer <rhyme label="a" type="m">bekent</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Wilt my doch <rhyme label="b" type="f">aenuerden</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Uwen gheest der waerheyt in my <rhyme label="a" type="m" corresp="#s3:l1">sendt</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Ghy zijt mijn <rhyme label="a" type="m" corresp="#s3:l1">fondament</rhyme></l>
        <l id="s3:l5" met="5" type="-+">Weest my altijt ontrent, dat ick mach <rhyme label="b" type="f" corresp="#s3:l2">volherden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Die Heere spreect tot my en weest niet <rhyme label="a" type="m">beureest</rhyme></l>
        <l id="s4:l2" met="3" type="-+">En wilt oock niet <rhyme label="b" type="f">beuen</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Al vint ghy v hier in een wilt <rhyme label="a" type="m" corresp="#s4:l1">foreest</rhyme></l>
        <l id="s4:l4" met="3" type="-+">By den draeck en oock dat <rhyme label="a" type="m" corresp="#s4:l1">beest</rhyme></l>
        <l id="s4:l5" met="5" type="-+">Ick sal v mynen gheest, tot trooste <rhyme label="b" type="f" corresp="#s4:l2">gheuen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Hoe kont dat ghy v voor menschen <rhyme label="a" type="m">veruaert</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Die toch moeten <rhyme label="b" type="f">steruen</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Ick hebbe v wt verre landen <rhyme label="a" type="m" corresp="#s5:l1">vergaert</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Als mijn oochappel <rhyme label="a" type="m" corresp="#s5:l1">bewaert</rhyme></l>
        <l id="s5:l5" met="5" type="-+">Want ghy zijt van mynen aert ghy en sult niet <rhyme label="b" type="f" corresp="#s5:l2">bederuen</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Keert v tot my mijn leden <rhyme label="a" type="m">teer</rhyme></l>
        <l id="s6:l2" met="3" type="-+">So muecht ghy salich <rhyme label="b" type="f">wesen</rhyme></l>
        <l id="s6:l3" met="4" type="-+">En vreest noch en beeft voort aen niet <rhyme label="a" type="m" corresp="#s6:l1">meer</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Ick ben alleen v <rhyme label="a" type="m" corresp="#s6:l1">Heer</rhyme></l>
        <l id="s6:l5" met="5" type="-+">En wijckt niet van mijnder leer, mijn volck <rhyme label="b" type="f" corresp="#s6:l2">ghepresen</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Koemt alle tot my die hier <rhyme label="a" type="m">arbeyt</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Belast zijt en <rhyme label="b" type="f">beladen</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Een eewighe vruecht is v <rhyme label="a" type="m" corresp="#s7:l1">bereyt</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Al door <rhyme label="a" type="m" corresp="#s7:l1">ghenadicheyt</rhyme></l>
        <l id="s7:l5" met="5" type="-+">Ick sal v met claer bescheyt, wt liefden <rhyme label="b" type="f" corresp="#s7:l2">versaden</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Ghy zijt mijn vrienden ist dat ghy <rhyme label="a" type="m">doet</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Al dat ick v <rhyme label="b" type="f">ghebiede</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Ick laet voor v mijn leuen <rhyme label="a" type="m" corresp="#s8:l1">goet</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Och mijn wtuercoren <rhyme label="a" type="m" corresp="#s8:l1">vroet</rhyme>,</l>
        <l id="s8:l5" met="5" type="-+">Ut grooter liefden soet dat dit <rhyme label="b" type="f" corresp="#s8:l2">gheschiede</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">O Syon om uwen wille <rhyme label="a" type="m">hoort</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Heb ick so veel <rhyme label="b" type="f">gheleden</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Ick heb v ghegheuen mijn goddelick <rhyme label="a" type="m" corresp="#s9:l1">woort</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Om te bringhen in <rhyme label="a" type="m" corresp="#s9:l1">accoort</rhyme></l>
        <l id="s9:l5" met="5" type="-+">Als ghy daer laecht versmoort in v <rhyme label="b" type="f" corresp="#s9:l2">boosheden</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">O Syon mijn alderliefste <rhyme label="a" type="m">schoon</rhyme></l>
        <l id="s10:l2" met="3" type="-+">En wilt niet <rhyme label="b" type="f">vreesen</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Uoor die tlichaem persequeren oft <rhyme label="a" type="m" corresp="#s10:l1">doon</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Ick sal v in mynen <rhyme label="a" type="m" corresp="#s10:l1">troon</rhyme></l>
        <l id="s10:l5" met="5" type="-+">Geuen des leuens croon, en vrueght <rhyme label="b" type="f" corresp="#s10:l2">vermeeren</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">O Syon mijn alderliefste <rhyme label="a" type="m">bruyt</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Bouen alle <rhyme label="b" type="f">vrouwen</rhyme></l>
        <l id="s11:l3" met="4" type="-+">Mijn goddelick woort in v herte <rhyme label="a" type="m" corresp="#s11:l1">sluyt</rhyme></l>
        <l id="s11:l4" met="3" type="-+">En latet van v niet <rhyme label="a" type="m" corresp="#s11:l1">wt</rhyme></l>
        <l id="s11:l5" met="5" type="-+">Mijn alderliefste spruyt, ick sal v my <rhyme label="b" type="f" corresp="#s11:l2">trouwen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Weent ende schreyt eenen weynighen <rhyme label="a" type="m">tijt</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Ghy sult haest <rhyme label="b" type="f">verblijden</rhyme></l>
        <l id="s12:l3" met="4" type="-+">Een eewighe vruecht noyt sulcken <rhyme label="a" type="m" corresp="#s12:l1">iolijt</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Is voor hem die my <rhyme label="a" type="m" corresp="#s12:l1">belijt</rhyme></l>
        <l id="s12:l5" met="5" type="-+">Uoor den menschen vol van spijt tot eewigen <rhyme label="b" type="f" corresp="#s12:l2">tijden</rhyme></l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Blinckende als de Sonne <rhyme label="a" type="m">schijn</rhyme></l>
        <l id="s13:l2" met="3" type="-+">Bouen alle <rhyme label="b" type="f">claerhede</rhyme></l>
        <l id="s13:l3" met="4" type="-+">En kleederen wit van zijden <rhyme label="a" type="m" corresp="#s13:l1">fijn</rhyme></l>
        <l id="s13:l4" met="3" type="-+">Sullen die wtuercoren <rhyme label="a" type="m" corresp="#s13:l1">mijn</rhyme></l>
        <l id="s13:l5" met="5" type="-+">Aendoen en blijde zijn, en rusten van <rhyme label="b" type="f" corresp="#s13:l2">swaerhede</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Een troostelick woort elck hooren <rhyme label="a" type="m">sal</rhyme></l>
        <l id="s14:l2" met="3" type="-+">Die hier nv <rhyme label="b" type="f">troren</rhyme></l>
        <l id="s14:l3" met="4" type="-+">Als die basuyne sal gheuen <rhyme label="a" type="m" corresp="#s14:l1">gheschal</rhyme></l>
        <l id="s14:l4" met="3" type="-+">Coemt hier mijn lief <rhyme label="a" type="m" corresp="#s14:l1">ghetal</rhyme></l>
        <l id="s14:l5" met="5" type="-+">Ick sal v gheuen al, mijn rijck te <rhyme label="b" type="f" corresp="#s14:l2">voren</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Gedenct den geuangenen als mede <rhyme label="a" type="m">geuaen</rhyme></l>
        <l id="s15:l2" met="3" type="-+">Ghy <rhyme label="b" type="f">wtuercoren</rhyme></l>
        <l id="s15:l3" met="4" type="-+">En bidt den Heere dat hy my <rhyme label="a" type="m" corresp="#s15:l1">saen</rhyme></l>
        <l id="s15:l4" met="3" type="-+">In ruste wil <rhyme label="a" type="m" corresp="#s15:l1">ontfaen</rhyme></l>
        <l id="s15:l5" met="5" type="-+">En afwasschen al mijn traen, hy sal v <rhyme label="b" type="f" corresp="#s15:l2">verhooren</rhyme></l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Oorloof aen broeders ende susters <rhyme label="a" type="m">gemeyn</rhyme>,</l>
        <l id="s16:l2" met="3" type="-+">Wy moeten nv <rhyme label="b" type="f">scheyden</rhyme></l>
        <l id="s16:l3" met="4" type="-+">Tot dat wy comen by Christum <rhyme label="a" type="m" corresp="#s16:l1">alleen</rhyme></l>
        <l id="s16:l4" met="3" type="-+">Ons hooftman en anders <rhyme label="a" type="m" corresp="#s16:l1">gheen</rhyme></l>
        <l id="s16:l5" met="5" type="-+">Wilt v daer toe bereen, daer wil ick v <rhyme label="b" type="f" corresp="#s16:l2">verbeyden</rhyme></l>
      </lg>
    </lg>
  </text>
</song>

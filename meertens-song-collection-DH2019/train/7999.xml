  <author>Jan Jansz. Deutel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">MYn hert hef ick tot u <rhyme label="a" type="f">Heere</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Mijn hoop alleen op u <rhyme label="b" type="m">staet</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Behoedt my doch voor <rhyme label="a" type="f" corresp="#s1:l1">oneere</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Die my wenscht mijn vyandt <rhyme label="b" type="m" corresp="#s1:l2">quaedt</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Sy werden Heer, soo <rhyme label="c" type="m">'tbetaemt</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Niet schaemroot die op u <rhyme label="d" type="f">bouwen</rhyme>:</l>
        <l id="s1:l7" met="4" type="+-">Maer sy sullen zijn <rhyme label="c" type="m" corresp="#s1:l5">beschaemt</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Die de vrome hier <rhyme label="d" type="f" corresp="#s1:l6">benouwen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Heer, wijst my doch uwe <rhyme label="a" type="f">weghen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Die ghy wilt dat ick sal <rhyme label="b" type="m">gaen</rhyme>.</l>
        <l id="s2:l3" met="4" type="+-">Tot den selven maeckt <rhyme label="a" type="f" corresp="#s2:l1">genegen</rhyme></l>
        <l id="s2:l4" met="4" type="+-">My, en doet my die <rhyme label="b" type="m" corresp="#s2:l2">verstaen</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Leert en stiert my nae u <rhyme label="c" type="m">woordt</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">In uwe waerheyt <rhyme label="d" type="f">ghepresen</rhyme>:</l>
        <l id="s2:l7" met="4" type="+-">Ghy zijt mijn hulp, dies nu <rhyme label="c" type="m" corresp="#s2:l5">voort</rhyme>.</l>
        <l id="s2:l8" met="4" type="+-">Wacht ick op u in dit <rhyme label="d" type="f" corresp="#s2:l6">wesen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Ghedenckt Heer, aen u <rhyme label="a" type="f">goedtheden</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Stelt u voor ooghen <rhyme label="b" type="m">voortaen</rhyme></l>
        <l id="s3:l3" met="4" type="+-">V groote <rhyme label="a" type="f" corresp="#s3:l1">barmhertigheden</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Die ghy voormaels hebt <rhyme label="b" type="m" corresp="#s3:l2">ghedaen</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Doch vergeet de sonden <rhyme label="c" type="m">swaer</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Mijner jongheydt seer <rhyme label="d" type="f">lichtveerdigh</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Ghedenckt mijns goedtlijck <rhyme label="c" type="m" corresp="#s3:l5">eenpaer</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Tot mijn hulpe zijt <rhyme label="d" type="f" corresp="#s3:l6">volveerdigh</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Godt is waerachtigh en <rhyme label="a" type="f">goedigh</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Hy ist en blijft sulcks <rhyme label="b" type="m">altijdt</rhyme>:</l>
        <l id="s4:l3" met="4" type="+-">Ten weghe, brenght hy <rhyme label="a" type="f" corresp="#s4:l1">sachtmoedigh</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Den sondaer vervallen <rhyme label="b" type="m" corresp="#s4:l2">wijdt</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">Den ootmoedighen leert <rhyme label="c" type="m">hy</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Sijn Godtsalighe <rhyme label="d" type="f">voetpaden</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Hy toont oock sijn weghen <rhyme label="c" type="m" corresp="#s4:l5">vry</rhyme></l>
        <l id="s4:l8" met="4" type="+-">Den armen Mensch en <rhyme label="d" type="f" corresp="#s4:l6">beladen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Goedtheyt en waerheyt <rhyme label="a" type="f">verheven</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Zijn des Heeren weghen <rhyme label="b" type="m">al</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Voor hem die daer na sijn <rhyme label="a" type="f" corresp="#s5:l1">leven</rhyme></l>
        <l id="s5:l4" met="4" type="+-">En sijn ganghen rechten <rhyme label="b" type="m" corresp="#s5:l2">sal</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">O Heer door uwen naem <rhyme label="c" type="m">klaer</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Wilt my goedighlijck mijn <rhyme label="d" type="f">sonden</rhyme></l>
        <l id="s5:l7" met="4" type="+-">Vergheven, want seere <rhyme label="c" type="m" corresp="#s5:l5">swaer</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">Ende groot zijn sy <rhyme label="d" type="f" corresp="#s5:l6">bevonden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Wie is hy die altijdt <rhyme label="a" type="f">spoedigh</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Onsen Godt vreest boven <rhyme label="b" type="m">al</rhyme>?</l>
        <l id="s6:l3" met="4" type="+-">Die werdt gheleert <rhyme label="a" type="f" corresp="#s6:l1">overvloedigh</rhyme>.</l>
        <l id="s6:l4" met="4" type="+-">Van den wegh dien hy gaen <rhyme label="b" type="m" corresp="#s6:l2">sal</rhyme>.</l>
        <l id="s6:l5" met="4" type="+-">Die sal besitten sijn <rhyme label="c" type="m">goedt</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Met stilheydt ende met <rhyme label="d" type="f">vrede</rhyme>:</l>
        <l id="s6:l7" met="4" type="+-">Sijn Zaet sal in <rhyme label="c" type="m" corresp="#s6:l5">overvloedt</rhyme></l>
        <l id="s6:l8" met="4" type="+-">Het landt oock besitten <rhyme label="d" type="f" corresp="#s6:l6">mede</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">De verborgentheyt des <rhyme label="a" type="f">Heeren</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Is den Mensch <rhyme label="b" type="m">gheopenbaert</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Die Godt vreest end' hout in <rhyme label="a" type="f" corresp="#s7:l1">eeren</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">End' sijn verbondt wel <rhyme label="b" type="m" corresp="#s7:l2">bewaert</rhyme>.</l>
        <l id="s7:l5" met="4" type="+-">Mijn hert ende mijn <rhyme label="c" type="m">ghemoet</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Op den Heer hen alleen <rhyme label="d" type="f">setten</rhyme>:</l>
        <l id="s7:l7" met="4" type="+-">Want hy maeckt vry mijnen <rhyme label="c" type="m" corresp="#s7:l5">voet</rhyme></l>
        <l id="s7:l8" met="4" type="+-">Wt al der Godtloosen <rhyme label="d" type="f" corresp="#s7:l6">netten</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Siet my aen met goeder <rhyme label="a" type="f">herten</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Hebt doch med'lijden met <rhyme label="b" type="m">my</rhyme>:</l>
        <l id="s8:l3" met="4" type="+-">Want eensaem ende vol <rhyme label="a" type="f" corresp="#s8:l1">smerten</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Ben ick Heer en gantsch <rhyme label="b" type="m" corresp="#s8:l2">onvry</rhyme>.</l>
        <l id="s8:l5" met="4" type="+-">Ick werde seere <rhyme label="c" type="m">benout</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Daegh'lijcx werdt grooter mijn <rhyme label="d" type="f">lijden</rhyme>:</l>
        <l id="s8:l7" met="4" type="+-">Helpt my, Heer, die u <rhyme label="c" type="m" corresp="#s8:l5">betrout</rhyme>,</l>
        <l id="s8:l8" met="4" type="+-">Wt den noot in desen <rhyme label="d" type="f" corresp="#s8:l6">tijden</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Mijn jammer wilt doch <rhyme label="a" type="f">aenmercken</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Mijnen anghst en noot <rhyme label="b" type="m">aensiet</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Mijn sonden en boose <rhyme label="a" type="f" corresp="#s9:l1">wercken</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Vergheeft my goedtlijck om <rhyme label="b" type="m" corresp="#s9:l2">niet</rhyme>.</l>
        <l id="s9:l5" met="4" type="+-">Siet hoe de vyanden <rhyme label="c" type="m">mijn</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">Moetwillighlijck boven <rhyme label="d" type="f">maten</rhyme>,</l>
        <l id="s9:l7" met="4" type="+-">Die groot van getale <rhyme label="c" type="m" corresp="#s9:l5">zijn</rhyme>,</l>
        <l id="s9:l8" met="4" type="+-">My seer vyandelijck <rhyme label="d" type="f" corresp="#s9:l6">haten</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Voor haer list mijn ziel <rhyme label="a" type="f">bewaret</rhyme>,</l>
        <l id="s10:l2" met="4" type="+-">Verlost my dat ick met <rhyme label="b" type="m">smaet</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">En met schand' niet zy <rhyme label="a" type="f" corresp="#s10:l1">beswaret</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">Want ghy zijt mijn <rhyme label="b" type="m" corresp="#s10:l2">toeverlaet</rhyme>.</l>
        <l id="s10:l5" met="4" type="+-">Slecht recht ben ick, my <rhyme label="c" type="m">behoet</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">Want ick sal, Heer, u <rhyme label="d" type="f">verwachten</rhyme>.</l>
        <l id="s10:l7" met="4" type="+-">Israel uyt <rhyme label="c" type="m" corresp="#s10:l5">tegenspoet</rhyme>,</l>
        <l id="s10:l8" met="4" type="+-">Verlost oock door uwe <rhyme label="d" type="f" corresp="#s10:l6">krachten</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

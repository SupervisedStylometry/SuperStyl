  <author>Hendrik Rintjes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Nae Christus <rhyme label="a" type="m">Hemel-vaert</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">D’Apostelen <rhyme label="a" type="m" corresp="#s1:l1">vergaart</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Een-drachtelijck te <rhyme label="b" type="f">gader</rhyme>:</l>
        <l id="s1:l4" met="3" type="-+">Verwachten van haer <rhyme label="c" type="m">Hooft</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Den Trooster die <rhyme label="c" type="m" corresp="#s1:l4">belooft</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Haer was van Godt den <rhyme label="b" type="f" corresp="#s1:l3">Vader</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Die Pinxter-Feest <rhyme label="a" type="m">verscheen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Als snellijck viel <rhyme label="a" type="m" corresp="#s2:l1">beneen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">De Geest daer elck op <rhyme label="b" type="f">hoopte</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Die als een windts <rhyme label="c" type="m">ghedruys</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Terstont vervulde ‘t <rhyme label="c" type="m" corresp="#s2:l4">huys</rhyme>:</l>
        <l id="s2:l6" met="3" type="-+">En met den vier haer <rhyme label="b" type="f" corresp="#s2:l3">Doopte</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">De twaelve sachmen <rhyme label="a" type="m">hier</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Om scheenen met een <rhyme label="a" type="m" corresp="#s3:l1">vier</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Om straelt met vier’ghe <rhyme label="b" type="f">Tonghen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Haer spraecke sonder <rhyme label="c" type="m">Tolk</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">Verbaesde ‘t uyt-Heemsch <rhyme label="c" type="m" corresp="#s3:l4">volck</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Van alsins <rhyme label="b" type="f" corresp="#s3:l3">in-ghedronghen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">O! wonder is ‘t (seght <rhyme label="a" type="m">d’een</rhyme>)</l>
        <l id="s4:l2" met="3" type="-+">Dat die van <rhyme label="a" type="m" corresp="#s4:l1">Galileen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Al ‘s Werelts Talen <rhyme label="b" type="f">konnen</rhyme>.</l>
        <l id="s4:l4" met="3" type="-+">Een ander seght: sy <rhyme label="c" type="m">zijn</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Versoopen in den <rhyme label="c" type="m" corresp="#s4:l4">Wijn</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">En van den Dronck <rhyme label="b" type="f" corresp="#s4:l3">verwonnen</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Neen, neen, (roept Petrus <rhyme label="a" type="m">bly</rhyme>)</l>
        <l id="s5:l2" met="3" type="-+">’t Is Ioëls <rhyme label="a" type="m" corresp="#s5:l1">Prophecy</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Die Godt aen ons <rhyme label="b" type="f">vervulden</rhyme>:</l>
        <l id="s5:l4" met="3" type="-+">Ten eynde Iacobs <rhyme label="c" type="m">huys</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Werdt kondigh, wie aen ‘t <rhyme label="c" type="m" corresp="#s5:l4">Kruys</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Nam op hem ‘s Werelts <rhyme label="b" type="f" corresp="#s5:l3">schulden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Godts hamer brak <rhyme label="a" type="m">gedwee</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Het steenen hert in <rhyme label="a" type="m" corresp="#s6:l1">twee</rhyme>:</l>
        <l id="s6:l3" met="3" type="-+">Wy zijn vol schuld <rhyme label="b" type="f">bevonden</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Aen ‘s Heeren bloet! wat <rhyme label="c" type="m">raet</rhyme>?</l>
        <l id="s6:l5" met="3" type="-+">Elck een (seght Petrus) <rhyme label="c" type="m" corresp="#s6:l4">laet</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Af-wasschen al sijn <rhyme label="b" type="f" corresp="#s6:l3">zonden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Die duysent zielen <rhyme label="a" type="m">daer</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Boetveerdigh <rhyme label="a" type="m" corresp="#s7:l1">wonderbaer</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Sich Christus niet en <rhyme label="b" type="f">schamen</rhyme>.</l>
        <l id="s7:l4" met="3" type="-+">Sy volghen Iesus <rhyme label="c" type="m">Wet</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Sy waeckten in ‘t <rhyme label="c" type="m" corresp="#s7:l4">ghebedt</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">En zijn een ziel te <rhyme label="b" type="f" corresp="#s7:l3">samen</rhyme>.</l>
      </lg>
    </lg>
  </text>

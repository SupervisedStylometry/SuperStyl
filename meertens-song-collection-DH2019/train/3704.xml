  <author>Pieter Datheen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="5" type="-+">VAN Gods goetheit end oordeel wil ick <rhyme label="a" type="f">singen</rhyme>.</l>
        <l id="s1:l2" met="5" type="-+">Ick wil hem schoone lofpsalmen <rhyme label="a" type="f" corresp="#s1:l1">toebringhen</rhyme>,</l>
        <l id="s1:l3" met="5" type="-+">Daermet dat ick Godt den Heer bouen <rhyme label="b" type="m">al</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Groot maeken <rhyme label="b" type="m" corresp="#s1:l3">sal</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="5" type="-+">Ick wil wandlen met oprechten <rhyme label="a" type="f">ghemoede</rhyme>,</l>
        <l id="s2:l2" met="5" type="-+">Wan sal ick herschen met vred' in <rhyme label="a" type="f" corresp="#s2:l1">voorspoede</rhyme>?</l>
        <l id="s2:l3" met="5" type="-+">Dan wil ick myn volck trauwelick <rhyme label="b" type="m">voorstaen</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">End vooren <rhyme label="b" type="m" corresp="#s2:l3">gaen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="5" type="-+">Van der boosheit heb' ick Heer' een <rhyme label="a" type="f">afgrysen</rhyme>,</l>
        <l id="s3:l2" met="5" type="-+">End die anders met der daet niet <rhyme label="a" type="f" corresp="#s3:l1">bewysen</rhyme>,</l>
        <l id="s3:l3" met="5" type="-+">Dan Ä™rgheit, die sullen in dat huys <rhyme label="b" type="m">myn</rhyme></l>
        <l id="s3:l4" met="2" type="-+">Nemmermeer <rhyme label="b" type="m" corresp="#s3:l3">sijn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="5" type="-+">Oock die verkeerde menschen al te <rhyme label="a" type="f">maele</rhyme>,</l>
        <l id="s4:l2" met="5" type="-+">Moeten wycken wt myn hof end myn <rhyme label="a" type="f" corresp="#s4:l1">saele</rhyme>.</l>
        <l id="s4:l3" met="5" type="-+">Hy sal van my die hem tot boosheit <rhyme label="b" type="m">wendt</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">Niet sijn <rhyme label="b" type="m" corresp="#s4:l3">ghekent</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="5" type="-+">Die met achterklap haeren naesten <rhyme label="a" type="f">schaeden</rhyme>:</l>
        <l id="s5:l2" met="5" type="-+">Die met grootscheit end hooghmoet is <rhyme label="a" type="f" corresp="#s5:l1">belaeden</rhyme>,</l>
        <l id="s5:l3" met="5" type="-+">Die sal ick t'saemen wtroeyen met <rhyme label="b" type="m">vliet</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">End lyden <rhyme label="b" type="m" corresp="#s5:l3">niet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="5" type="-+">Myn ooghen sullen sien nae den <rhyme label="a" type="f">oprechten</rhyme>,</l>
        <l id="s6:l2" met="5" type="-+">Op dat sulcke moghen wesen myn <rhyme label="a" type="f" corresp="#s6:l1">knechten</rhyme>,</l>
        <l id="s6:l3" met="5" type="-+">My sullen dienen die vrom' ende <rhyme label="b" type="m">goet</rhyme>,</l>
        <l id="s6:l4" met="2" type="-+">Sijn van <rhyme label="b" type="m" corresp="#s6:l3">ghemoedt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="5" type="-+">Die tot bedrogh end list hem wilt <rhyme label="a" type="f">begeuen</rhyme>,</l>
        <l id="s7:l2" met="5" type="-+">Die sal van my in dienst niet sijn <rhyme label="a" type="f" corresp="#s7:l1">verheuen</rhyme>,</l>
        <l id="s7:l3" met="5" type="-+">Die lueghenspreker en sal oock by <rhyme label="b" type="m">my</rhyme></l>
        <l id="s7:l4" met="2" type="-+">Niet wesen <rhyme label="b" type="m" corresp="#s7:l3">vry</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="5" type="-+">Vroegh met ernst sal ick dryuen wt den <rhyme label="a" type="f">lande</rhyme>,</l>
        <l id="s8:l2" met="5" type="-+">Die boosen all', end t'saem bringen ter <rhyme label="a" type="f" corresp="#s8:l1">schande</rhyme>,</l>
        <l id="s8:l3" met="5" type="-+">Op dat Gods huys van boosheit groot end <rhyme label="b" type="m">kleyn</rhyme>,</l>
        <l id="s8:l4" met="2" type="-+">Gantsch werde <rhyme label="b" type="m" corresp="#s8:l3">reyn</rhyme>.</l>
      </lg>
    </lg>
  </text>

  <author>Willem Sluiter</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Laat ons, op de beste <rhyme label="a" type="f">wijsen</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Nu wy hier soo soet <rhyme label="b" type="m">alleen</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Met ons meidskens zijn <rhyme label="b" type="m" corresp="#s1:l2">by-een</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Godt met vroolijk singen <rhyme label="a" type="f" corresp="#s1:l1">prijsen</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Dat geen yd’le praat of <rhyme label="c" type="m">klap</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Vrucht’loos ons den tijt <rhyme label="c" type="m" corresp="#s1:l5">ontsnapp</rhyme>’.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Geen gewenchter <rhyme label="a" type="f">Maagdereijen</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Konnen ergens zijn <rhyme label="b" type="m">vergaart</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Dan daar hert en mont, <rhyme label="b" type="m" corresp="#s2:l2">gepaart</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">’s Heeren lof met lust <rhyme label="a" type="f" corresp="#s2:l1">verbreijen</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Nergens isser beter <rhyme label="c" type="m">vreugt</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Voor de Christelijke <rhyme label="c" type="m" corresp="#s2:l5">jeugt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Beter sal ons dat <rhyme label="a" type="f">gelijken</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Tot behouding onser <rhyme label="b" type="m">eer</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Dan als of wy op en <rhyme label="b" type="m" corresp="#s3:l2">neer</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Soo nieuwsgierig gingen <rhyme label="a" type="f" corresp="#s3:l1">kijken</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Als eens Dina, die daar <rhyme label="c" type="m">door</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Eer en achting haast <rhyme label="c" type="m" corresp="#s3:l5">verloor</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Laat de werelt and’re <rhyme label="a" type="f">lokken</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Rechte maagden na den <rhyme label="b" type="m">geest</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Lieven Iesus <rhyme label="b" type="m" corresp="#s4:l2">allermeest</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Ia sy loopen Hem, <rhyme label="a" type="f" corresp="#s4:l1">getrokken</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Vaardig na, en volgen <rhyme label="c" type="m">Hem</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Op ’t geluit van sijne <rhyme label="c" type="m" corresp="#s4:l5">stem</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Maar wy sullen ook doen <rhyme label="a" type="f">hooren</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Onse stem, die klaar en <rhyme label="b" type="m">soet</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Tot sijn glori klinken <rhyme label="b" type="m" corresp="#s5:l2">moet</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Dat s’ hem lieflik mag <rhyme label="a" type="f" corresp="#s5:l1">bekooren</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">Lustig, rustig, <rhyme label="c" type="m">maagden-schaar</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Sint den Heere, voor en <rhyme label="c" type="m" corresp="#s5:l5">naar</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Maagde-stemmen zijn te <rhyme label="a" type="f">waardig</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Dan dat ‘s werelts <rhyme label="b" type="m">koosery</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Daar door uitgesongen <rhyme label="b" type="m" corresp="#s6:l2">zy</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Soo lichtvaardig en <rhyme label="a" type="f" corresp="#s6:l1">onaardig</rhyme>.</l>
        <l id="s6:l5" met="4" type="+-">Sulk een onbesint <rhyme label="c" type="m">geluit</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Past alleen een <rhyme label="c" type="m" corresp="#s6:l5">ydeltuit</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Godt, en ’t goedt, en ’t soet, en ’t <rhyme label="a" type="f">sticht’lik</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Kiesen wy tot ons’ <rhyme label="b" type="m">gesank</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Nu en al ons’ leven <rhyme label="b" type="m" corresp="#s7:l2">lank</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Niemant lokt ons nu soo <rhyme label="a" type="f" corresp="#s7:l1">licht’lik</rhyme></l>
        <l id="s7:l5" met="4" type="+-">Tot ontuch’ge liedtjens <rhyme label="c" type="m">weer</rhyme>.</l>
        <l id="s7:l6" met="4" type="+-">Neen. Wy zijn soo kintsch niet <rhyme label="c" type="m" corresp="#s7:l5">meer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Lied’ren, Lofgesangen, <rhyme label="a" type="f">Psalmen</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Daar Godts eer door wert <rhyme label="b" type="m">verbreidt</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Geven vry meer <rhyme label="b" type="m" corresp="#s8:l2">lieflikheit</rhyme>.</l>
        <l id="s8:l4" met="4" type="+-">Godt heeft selfs in dese <rhyme label="a" type="f" corresp="#s8:l1">galmen</rhyme></l>
        <l id="s8:l5" met="4" type="+-">Sulk een lust, dat ook daar <rhyme label="c" type="m">by</rhyme></l>
        <l id="s8:l6" met="4" type="+-">Sijn verblijf en wooning <rhyme label="c" type="m" corresp="#s8:l5">zy</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Soo de vrouwen en de <rhyme label="a" type="f">maagden</rhyme></l>
        <l id="s9:l2" met="4" type="+-">In ’t verkooren <rhyme label="b" type="m">Israël</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Met haar tromm’len, sang, en <rhyme label="b" type="m" corresp="#s9:l2">spel</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Eertijts onsen Godt <rhyme label="a" type="f" corresp="#s9:l1">behaagden</rhyme>,</l>
        <l id="s9:l5" met="4" type="+-">Is hem onse <rhyme label="c" type="m">vreugden-sank</rhyme></l>
        <l id="s9:l6" met="4" type="+-">Ook niet al soo wel te <rhyme label="c" type="m" corresp="#s9:l5">dank</rhyme>?</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Ia de groote Godt hier <rhyme label="a" type="f">boven</rhyme></l>
        <l id="s10:l2" met="4" type="+-">Wil, dat jonge Maagden <rhyme label="b" type="m">Hem</rhyme></l>
        <l id="s10:l3" met="4" type="+-">Met een opgeheven <rhyme label="b" type="m" corresp="#s10:l2">stem</rhyme></l>
        <l id="s10:l4" met="4" type="+-">Sullen singen ende <rhyme label="a" type="f" corresp="#s10:l1">loven</rhyme>.</l>
        <l id="s10:l5" met="4" type="+-">Maagde-stemmen dringen <rhyme label="c" type="m">door</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">Datter Godt sijn lof aan <rhyme label="c" type="m" corresp="#s10:l5">hoor</rhyme>’.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Hy geev’ eind’lik ons te <rhyme label="a" type="f">leeren</rhyme></l>
        <l id="s11:l2" met="4" type="+-">’t Nieuw gesang, dat, voor sijn <rhyme label="b" type="m">throon</rhyme>,</l>
        <l id="s11:l3" met="4" type="+-">In sijn rijk, staag even <rhyme label="b" type="m" corresp="#s11:l2">schoon</rhyme>,</l>
        <l id="s11:l4" met="4" type="+-">Sulk maagden <rhyme label="a" type="f" corresp="#s11:l1">quinkeleeren</rhyme>,</l>
        <l id="s11:l5" met="4" type="+-">Die, in Koninklijke <rhyme label="c" type="m">staat</rhyme>,</l>
        <l id="s11:l6" met="4" type="+-">’t Lam navolgen waar het <rhyme label="c" type="m" corresp="#s11:l5">gaat</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

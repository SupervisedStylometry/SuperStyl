    <melody>Het zwaard is uit de schede</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">HEt sweert is wter <rhyme label="a" type="f">scheyden</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Om te storten donnoosel <rhyme label="b" type="m">bloet</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Die Pharizeen <rhyme label="a" type="f" corresp="#s1:l1">verleyden</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Pilatum al metter <rhyme label="b" type="m" corresp="#s1:l2">spoet</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Al is Pharao op ons <rhyme label="b" type="m" corresp="#s1:l2">verwoet</rhyme></l>
        <l id="s1:l6" met="3" type="-+">God can ons wel <rhyme label="c" type="f">ghenesen</rhyme></l>
        <l id="s1:l7" met="4" type="-+">Uoor den onwetenden ist dat ick bidden <rhyme label="b" type="m" corresp="#s1:l2">moet</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Al die mijn veruolghers <rhyme label="c" type="f" corresp="#s1:l6">wesen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Alleen zijn sy <rhyme label="a" type="f">verbolghen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Om dat ick op Christum wil <rhyme label="b" type="m">staen</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Ende willen my <rhyme label="a" type="f" corresp="#s2:l1">veruolghen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Ick en weet waer henen <rhyme label="b" type="m" corresp="#s2:l2">gaen</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Al soudense my mijn hooft af <rhyme label="b" type="m" corresp="#s2:l2">slaen</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Die Schriftuere sal ick noch <rhyme label="c" type="f">lesen</rhyme></l>
        <l id="s2:l7" met="4" type="-+">O Heere wilt haer ten besten <rhyme label="b" type="m" corresp="#s2:l2">beraen</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Al die mijn veruolghers <rhyme label="c" type="f" corresp="#s2:l6">wesen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Als ick sadt in die <rhyme label="a" type="f">taueerne</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Daermen niet dan boosheyt en <rhyme label="b" type="m">brout</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Doen saghen sy my seer <rhyme label="a" type="f" corresp="#s3:l1">gheerne</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Wijf en kint liet ick <rhyme label="b" type="m" corresp="#s3:l2">benout</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Dit hebben sy langhe wel <rhyme label="b" type="m" corresp="#s3:l2">aenschout</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Sy en straften my noyt van <rhyme label="c" type="f">desen</rhyme></l>
        <l id="s3:l7" met="4" type="-+">O Heere v gracie op haerlieden <rhyme label="b" type="m" corresp="#s3:l2">dout</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Al die mijn veruolghers <rhyme label="c" type="f" corresp="#s3:l6">wesen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Egypten moet ick <rhyme label="a" type="f">verlaten</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Sy hebben mijns leuens <rhyme label="b" type="m">beroemt</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Gaen dolen mijnder <rhyme label="a" type="f" corresp="#s4:l1">straten</rhyme></l>
        <l id="s4:l4" met="3" type="-+">En verbeyden den dach die <rhyme label="b" type="m" corresp="#s4:l2">coemt</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Wie Christum volghen wilt <rhyme label="b" type="m" corresp="#s4:l2">onbeschroemt</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Wort van der werelt <rhyme label="c" type="f">begresen</rhyme></l>
        <l id="s4:l7" met="4" type="-+">O Heere en laetse doch niet <rhyme label="b" type="m" corresp="#s4:l2">verdoemt</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Al die mijn veruolghers <rhyme label="c" type="f" corresp="#s4:l6">wesen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Al ist dat sy <rhyme label="a" type="f">begheeren</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Mijn bloet seer <rhyme label="b" type="m">onueruaert</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Wie sal my moghen <rhyme label="a" type="f" corresp="#s5:l1">deeren</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Als ghy my o Heere <rhyme label="b" type="m" corresp="#s5:l2">bewaert</rhyme></l>
        <l id="s5:l5" met="4" type="-+">U heylich woort heb ick <rhyme label="b" type="m" corresp="#s5:l2">verclaert</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Dwelck sy my verbieden te <rhyme label="c" type="f">lesen</rhyme></l>
        <l id="s5:l7" met="4" type="-+">O Heere en laetse doch niet <rhyme label="b" type="m" corresp="#s5:l2">beswaert</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Al die mijn veruolghers <rhyme label="c" type="f" corresp="#s5:l6">wesen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Doen ick ouerspel <rhyme label="a" type="f">hanteerde</rhyme></l>
        <l id="s6:l2" met="3" type="-+">En leefde na des duyuels <rhyme label="b" type="m">raet</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Int hoeren huys <rhyme label="a" type="f" corresp="#s6:l1">verkeerde</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Daermen alle duechden <rhyme label="b" type="m" corresp="#s6:l2">versmaet</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Doen ick loonde quaet met <rhyme label="b" type="m" corresp="#s6:l2">quaet</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Die werelt heeft my <rhyme label="c" type="f">ghepresen</rhyme></l>
        <l id="s6:l7" met="4" type="-+">O Heere vergheeft haerlieder <rhyme label="b" type="m" corresp="#s6:l2">misdaet</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Al die mijn veruolghers <rhyme label="c" type="f" corresp="#s6:l6">wesen</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Doen ick Schriftuere ghinck <rhyme label="a" type="f">versinnen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">O mijn Heere <rhyme label="b" type="m">ghebenedijt</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Wy moeten die werelt <rhyme label="a" type="f" corresp="#s7:l1">verwinnen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Souden wy comen daer ghy <rhyme label="b" type="m" corresp="#s7:l2">zijt</rhyme></l>
        <l id="s7:l5" met="4" type="-+">Ick wil gaen laten des werelts <rhyme label="b" type="m" corresp="#s7:l2">iolijt</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Al sou ick zijn <rhyme label="c" type="f">verknesen</rhyme></l>
        <l id="s7:l7" met="4" type="-+">O Heere schelt haerlieder boosheyt <rhyme label="b" type="m" corresp="#s7:l2">quijt</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Al die mijn veruolghers <rhyme label="c" type="f" corresp="#s7:l6">wesen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Syon wilt vromelick <rhyme label="a" type="f">strijden</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Blijft volstandich tot in den <rhyme label="b" type="m">ent</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Uwen Hertooch heeft moeten <rhyme label="a" type="f" corresp="#s8:l1">lijden</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Totter doot was hy in <rhyme label="b" type="m" corresp="#s8:l2">torment</rhyme></l>
        <l id="s8:l5" met="4" type="-+">Dat deden die Schriftgheleerden <rhyme label="b" type="m" corresp="#s8:l2">blent</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Die de waerheyt hebben <rhyme label="c" type="f">verwesen</rhyme></l>
        <l id="s8:l7" met="4" type="-+">O Heere bewaerse doch <rhyme label="b" type="m" corresp="#s8:l2">ongheschent</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Al die mijn veruolghers <rhyme label="c" type="f" corresp="#s8:l6">wesen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Prince God wilt ons <rhyme label="a" type="f">verstercken</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Door v goetheyt o Heere <rhyme label="b" type="m">ient</rhyme></l>
        <l id="s9:l3" met="3" type="-+">En na v behaghen in ons <rhyme label="a" type="f" corresp="#s9:l1">wercken</rhyme></l>
        <l id="s9:l4" met="3" type="-+">So dat wy vreesen gheen <rhyme label="b" type="m" corresp="#s9:l2">torment</rhyme></l>
        <l id="s9:l5" met="4" type="-+">Al sou het lichaem worden <rhyme label="b" type="m" corresp="#s9:l2">gheschent</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Als v licht in ons is <rhyme label="c" type="f">gheresen</rhyme></l>
        <l id="s9:l7" met="4" type="-+">O Heere maect haer uwen wille <rhyme label="b" type="m" corresp="#s9:l2">bekent</rhyme></l>
        <l id="s9:l8" met="3" type="-+">Al die mijn veruolghers <rhyme label="c" type="f" corresp="#s9:l6">wesen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <author>Willem de Swaen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">DOrathee ,, ach! uw' twee Susters, God <rhyme label="a" type="m">begeven</rhyme>.</l>
        <l id="s1:l2" met="3" type="+-">Sy besoecken // ('t wil niet <rhyme label="b" type="f">loecken</rhyme>)</l>
        <l id="s1:l3" met="4" type="+-">Of Ghy, g'lijck als sy, wilt <rhyme label="c" type="f">leven</rhyme>.</l>
        <l id="s1:l4" met="4" type="+-">Sy <rhyme label="b" type="f" corresp="#s1:l2">besoecken</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Maer gehecht // en <rhyme label="a" type="m">gevlecht</rhyme></l>
        <l id="s2:l2" met="3" type="+-">Zijn met <rhyme label="b" type="f">liefdes-banden</rhyme></l>
        <l id="s2:l3" met="4" type="+-">All' uw' sinnen // all' uw' <rhyme label="c" type="f">minne</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Aen den Heer van alle <rhyme label="b" type="f" corresp="#s2:l2">landen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">G' hebt geleert // G' hebt <rhyme label="a" type="m">bekeert</rhyme></l>
        <l id="s3:l2" met="3" type="+-">Uwe Susters <rhyme label="b" type="f">deftich</rhyme>;</l>
        <l id="s3:l3" met="4" type="+-">En Sy leden // en Sy <rhyme label="c" type="f">streden</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Voor de leeringh Christi <rhyme label="b" type="f" corresp="#s3:l2">treftich</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Groote nood // ja de <rhyme label="a" type="m">dood</rhyme></l>
        <l id="s4:l2" met="3" type="+-">Hebben Sy <rhyme label="b" type="f">verdragen</rhyme>:</l>
        <l id="s4:l3" met="4" type="+-">Hooge gaven // 's Hemels <rhyme label="c" type="f">haven</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Kregen Sy na dese <rhyme label="b" type="f" corresp="#s4:l2">vlagen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Doen zijt Ghy // in de <rhyme label="a" type="m">ly</rhyme></l>
        <l id="s5:l2" met="3" type="+-">We'er daerom <rhyme label="b" type="f">gekomen</rhyme>:</l>
        <l id="s5:l3" met="4" type="+-">In die dagen // hebt Ghy <rhyme label="c" type="f">slagen</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Lustich op uw' le'en <rhyme label="b" type="f" corresp="#s5:l2">vernomen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Ey! Ghy hebt // en Ghy <rhyme label="a" type="m">schept</rhyme></l>
        <l id="s6:l2" met="3" type="+-">Vrolijckheyd in 't <rhyme label="b" type="f">lijden</rhyme>.</l>
        <l id="s6:l3" met="4" type="+-">In het blaecken // in het <rhyme label="c" type="f">kraecken</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Uwer le'en, Ghy U <rhyme label="b" type="f" corresp="#s6:l2">verblijden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Ghy ginght heen // Ghy ginght <rhyme label="a" type="m">tre'en</rhyme></l>
        <l id="s7:l2" met="3" type="+-">Na 't schavot <rhyme label="b" type="f">blymoedich</rhyme>.</l>
        <l id="s7:l3" met="4" type="+-">U verbeyden // 's Hemels <rhyme label="c" type="f">weyden</rhyme></l>
        <l id="s7:l4" met="4" type="+-">En Ghy quaemt daer in gansch <rhyme label="b" type="f" corresp="#s7:l2">bloedich</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Uyt dat land // heeft een <rhyme label="a" type="m">mand'</rhyme></l>
        <l id="s8:l2" met="3" type="+-">God met schoone <rhyme label="b" type="f">Roosen</rhyme></l>
        <l id="s8:l3" met="4" type="+-">Ne'er gesonden // op dier <rhyme label="c" type="f">stonden</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Die Theophilus sagh <rhyme label="b" type="f" corresp="#s8:l2">bloosen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Dese man // nam die <rhyme label="a" type="m">an</rhyme>,</l>
        <l id="s9:l2" met="3" type="+-">En Hy sich <rhyme label="b" type="f">bekeerden</rhyme>;</l>
        <l id="s9:l3" met="4" type="+-">Ja sijn leven // heeft <rhyme label="c" type="f">gegeven</rhyme></l>
        <l id="s9:l4" met="4" type="+-">Voor den Heer dees <rhyme label="b" type="f" corresp="#s9:l2">Rechtsgeleerden</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">'s Hemels lot // schonck hem <rhyme label="a" type="m">God</rhyme></l>
        <l id="s10:l2" met="3" type="+-">Voor dees <rhyme label="b" type="f">minne-voncken</rhyme>;</l>
        <l id="s10:l3" met="4" type="+-">Om sijn deughden // is van <rhyme label="c" type="f">vreughden</rhyme></l>
        <l id="s10:l4" met="4" type="+-">Hy, en Ghy, gestadich <rhyme label="b" type="f" corresp="#s10:l2">droncken</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Och of Ghy // oock op <rhyme label="a" type="m">my</rhyme>,</l>
        <l id="s11:l2" met="3" type="+-">Dorothee, woud <rhyme label="b" type="f">dencken</rhyme>!</l>
        <l id="s11:l3" met="4" type="+-">Ey! bidt krachtich // God <rhyme label="c" type="f">Almachtich</rhyme>,</l>
        <l id="s11:l4" met="4" type="+-">Dat Hy my sijn Hof wilt <rhyme label="b" type="f" corresp="#s11:l2">schencken</rhyme>.</l>
      </lg>
    </lg>
  </text>

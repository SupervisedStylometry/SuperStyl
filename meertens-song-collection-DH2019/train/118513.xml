    <melody>Tien geboden</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Willem Sluiter</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Heil-rijke Godt, gy die voor <rhyme label="a" type="f">desen</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Uw volk en landt soo gunstig <rhyme label="b" type="m">waart</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Waar voor u Naam zy hoog <rhyme label="a" type="f" corresp="#s1:l1">gepresen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Siet, hoe wy heden zijn <rhyme label="b" type="m" corresp="#s1:l2">beswaart</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Men hoort van krijg en <rhyme label="a" type="f">krijgs-geruchten</rhyme>;</l>
        <l id="s2:l2" met="4" type="-+">'t Een volk en Rijk is tegen 't <rhyme label="b" type="m">aar</rhyme>.</l>
        <l id="s2:l3" met="4" type="-+">Voor d'eene mensch moet d'ander <rhyme label="a" type="f" corresp="#s2:l1">vluchten</rhyme>:</l>
        <l id="s2:l4" met="4" type="-+">Men bijt en rijt en eet <rhyme label="b" type="m" corresp="#s2:l2">malkaar</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Wy komen, ned'rig en <rhyme label="a" type="f">verslagen</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Als redd'- en radeloos, tot <rhyme label="b" type="m">u</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Verlos ons, na uw <rhyme label="a" type="f" corresp="#s3:l1">welbehagen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">En blijf van ons' gesmeek niet <rhyme label="b" type="m" corresp="#s3:l2">schuw</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Wilt ons het vorig <rhyme label="a" type="f">overtreden</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Doch niet gedenken; haast u, <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En laat all uw <rhyme label="a" type="f" corresp="#s4:l1">barmhertigheden</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Ons nu voorkomen, als <rhyme label="b" type="m" corresp="#s4:l2">wel-eer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Godt onses heils, help ons, om <rhyme label="a" type="f">d'eere</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Van uw ontsachelijke <rhyme label="b" type="m">Naam</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Dat elk van ons uw lof <rhyme label="a" type="f" corresp="#s5:l1">vermeere</rhyme>:</l>
        <l id="s5:l4" met="4" type="-+">Versoen all' onse sonden <rhyme label="b" type="m" corresp="#s5:l2">t'saam</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Neem wech de swaartste plaag van <rhyme label="a" type="f">allen</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">En laat ons, die dus zijn <rhyme label="b" type="m">ontmant</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">In uw barmhert'ge handt doch <rhyme label="a" type="f" corresp="#s6:l1">vallen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Niet in der menschen wreede <rhyme label="b" type="m" corresp="#s6:l2">handt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Kastijd ons, doch met maat en <rhyme label="a" type="f">goetheit</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Niet in uw toorn, wanneer hij <rhyme label="b" type="m">blaakt</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Op dat gy ons niet door <rhyme label="a" type="f" corresp="#s7:l1">verwoedtheit</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Des vyandts gansch te niete <rhyme label="b" type="m" corresp="#s7:l2">maakt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Staat op, Heer, om 't hertgrondig <rhyme label="a" type="f">kermen</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Van uw nootdruft'ge <rhyme label="b" type="m">Christen-schaar</rhyme>.</l>
        <l id="s8:l3" met="4" type="-+">Wilt uwer weesen u <rhyme label="a" type="f" corresp="#s8:l1">ontfermen</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Die tot u schreien in <rhyme label="b" type="m" corresp="#s8:l2">gevaar</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Soudt gy in jammer ons <rhyme label="a" type="f">vergeten</rhyme>?</l>
        <l id="s9:l2" met="4" type="-+">Denk aan de kinderkens in 't <rhyme label="b" type="m">lant</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Die noch geen onderscheit en <rhyme label="a" type="f" corresp="#s9:l1">weten</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Van rechter- of van <rhyme label="b" type="m" corresp="#s9:l2">slinker-hant</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Gy zijt uw volk, in druk en <rhyme label="a" type="f">lijden</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Een hoog vertrek, een vaste <rhyme label="b" type="m">borgt</rhyme></l>
        <l id="s10:l3" met="4" type="-+">En toevlucht in benautheits <rhyme label="a" type="f" corresp="#s10:l1">tijden</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Die selfs, in alles, voor haar <rhyme label="b" type="m" corresp="#s10:l2">sorgt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Heer onse sterkte, wilt ons <rhyme label="a" type="f">sterken</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Want onse ziel vertrouwt op <rhyme label="b" type="m">u</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">En in de schaduw uwer <rhyme label="a" type="f" corresp="#s11:l1">vlerken</rhyme></l>
        <l id="s11:l4" met="4" type="-+">Is doch al ons' bescherming <rhyme label="b" type="m" corresp="#s11:l2">nu</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Geeft gy ons hulp uit dees' <rhyme label="a" type="f">elende</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Uit ons' benautheit en <rhyme label="b" type="m">verdriet</rhyme>:</l>
        <l id="s12:l3" met="4" type="-+">Want wat voor heil de mensch oit <rhyme label="a" type="f" corresp="#s12:l1">sende</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">'t Is alles sonder u doch <rhyme label="b" type="m" corresp="#s12:l2">niet</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Godt, onse schilt, hulp, en <rhyme label="a" type="f">vertrouwen</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Om in genaad' op ons te <rhyme label="b" type="m">sien</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Wilt u Gesalfden slechts <rhyme label="a" type="f" corresp="#s13:l1">aanschouwen</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Dien wy u tot versoening <rhyme label="b" type="m" corresp="#s13:l2">bien</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Door Hem aangrijpen w' uw <rhyme label="a" type="f">vermogen</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">En maken met u vaste <rhyme label="b" type="m">vree</rhyme>.</l>
        <l id="s14:l3" met="4" type="-+">Verhoor met vaderlijk <rhyme label="a" type="f" corresp="#s14:l1">meedogen</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">In sijnen naam, doch onse <rhyme label="b" type="m" corresp="#s14:l2">bee</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

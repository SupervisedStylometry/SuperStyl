    <melody>Nun lasst uns den Leib begraben</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Tjaert Sonnema</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HEt doode lyf laet ons <rhyme label="a" type="m">besteên</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Ter aerd, en daer niet twyflen aen, <rhyme label="b" type="m">Het</rhyme></l>
        <l id="s1:l3" met="4" type="-+">sal in sijn volmaekte leên Gewis <rhyme label="a" type="m" corresp="#s1:l1">ten</rhyme></l>
        <l id="s1:l4" met="4" type="-+">jongsten dagh <rhyme label="b" type="m" corresp="#s1:l2">opstaen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Het lichaem is gemaekt van <rhyme label="a" type="m">aerd</rhyme></l>
        <l id="s2:l2" met="4" type="-+">En wederom tot aerde <rhyme label="b" type="m">gaet</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">'t Sal uit der aerd gaen <rhyme label="a" type="m" corresp="#s2:l1">Hemelwaert</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Als Gods basuin sich hooren <rhyme label="b" type="m" corresp="#s2:l2">laet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">De ziel by God door Sijn <rhyme label="a" type="m">genaed</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Voortaen in d' eeuwigheden <rhyme label="b" type="m">leeft</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Den welk van sonden en <rhyme label="a" type="m" corresp="#s3:l1">misdaed</rhyme></l>
        <l id="s3:l4" met="4" type="-+">God door Sijn Soon gesuivert <rhyme label="b" type="m" corresp="#s3:l2">heeft</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">De mensche scheidet uit het <rhyme label="a" type="m">huis</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Van droefheid en van swaer <rhyme label="b" type="m">ellend</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Hy wert verlost door Christi <rhyme label="a" type="m" corresp="#s4:l1">kruis</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Hy sterft, maer leeft noch sonder <rhyme label="b" type="m" corresp="#s4:l2">end</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Op aerden is de mensch <rhyme label="a" type="m">altyd</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Bedrukt en vol <rhyme label="b" type="m">bekommernis</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Maer die'er sterft verlaet de <rhyme label="a" type="m" corresp="#s5:l1">stryd</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">En in de rust en blydschap <rhyme label="b" type="m" corresp="#s5:l2">is</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Nu laeten wy hem slaepen <rhyme label="a" type="m">vry</rhyme></l>
        <l id="s6:l2" met="4" type="-+">En over al ons' wegen <rhyme label="b" type="m">gaen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">De waek ons t' saem bevolen <rhyme label="a" type="m" corresp="#s6:l1">zy</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">De dood sal ons ook komen <rhyme label="b" type="m" corresp="#s6:l2">aen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">O Heer, wilt ons genaedigh <rhyme label="a" type="m">zijn</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Om Christi will, en ons <rhyme label="b" type="m">bevryd</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Voor Sathans macht en helsche <rhyme label="a" type="m" corresp="#s7:l1">pyn</rhyme>:</l>
        <l id="s7:l4" met="4" type="-+">U zy lof, eer tot aller <rhyme label="b" type="m" corresp="#s7:l2">tyd</rhyme>.</l>
      </lg>
    </lg>
  </text>

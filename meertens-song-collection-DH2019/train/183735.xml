  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ô Hoe bekoorlijk is uw <rhyme label="a" type="m">vreugd</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Echte <rhyme label="b" type="f">Vrije-Metselaaren</rhyme>!</l>
        <l id="s1:l3" met="4" type="-+">ô Hoe bekoorlijk is uw <rhyme label="a" type="m" corresp="#s1:l1">vreugd</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Steeds vermaagschapt aan de <rhyme label="a" type="m" corresp="#s1:l1">deugd</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Gij kweekt menschlievendheid in 't <rhyme label="a" type="m">hart</rhyme>;</l>
        <l id="s2:l2" met="4" type="+-">Siert u met hare <rhyme label="b" type="f">eigenschappen</rhyme>;</l>
        <l id="s2:l3" met="4" type="-+">Gij kweekt menschlievendheid in 't <rhyme label="a" type="m" corresp="#s2:l1">hart</rhyme>;</l>
        <l id="s2:l4" met="4" type="+-">Deelt in andrer heil en <rhyme label="a" type="m" corresp="#s2:l1">smart</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">ô Hoe bekoorlijk is uw <rhyme label="a" type="m">vreugd</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Echte <rhyme label="b" type="f">Vrije-Metselaaren</rhyme>!</l>
        <l id="s3:l3" met="4" type="-+">ô Hoe bekoorlijk is uw <rhyme label="a" type="m" corresp="#s3:l1">vreugd</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Steeds vermaagschapt aan de <rhyme label="a" type="m" corresp="#s3:l1">deugd</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">De wetten der <rhyme label="a" type="m">welvoeglijkheid</rhyme>, -</l>
        <l id="s4:l2" met="4" type="+-">Ook de regels uwer <rhyme label="b" type="f">orde</rhyme>, -</l>
        <l id="s4:l3" met="4" type="-+">De wetten der <rhyme label="a" type="m" corresp="#s4:l1">welvoeglijkheid</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Volgt ge altoos met wijs <rhyme label="a" type="m" corresp="#s4:l1">beleid</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">ô Hoe, bekoorlijk is uw <rhyme label="a" type="m">vreugd</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Echte <rhyme label="b" type="f">Vrije-Metselaaren</rhyme>!</l>
        <l id="s5:l3" met="4" type="-+">ô Hoe bekoorlijk is uw <rhyme label="a" type="m" corresp="#s5:l1">vreugd</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Steeds vermaagschapt aan de <rhyme label="a" type="m" corresp="#s5:l1">deugd</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Vervreemd van allen wuft <rhyme label="a" type="m">vermaak</rhyme>, -</l>
        <l id="s6:l2" met="4" type="+-">Waarin hoofd, noch hart kan <rhyme label="b" type="f">deelen</rhyme>, -</l>
        <l id="s6:l3" met="4" type="-+">Vervreemd van allen wuft <rhyme label="a" type="m" corresp="#s6:l1">vermaak</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Volgt ge een grootsche, eedle <rhyme label="a" type="m" corresp="#s6:l1">taak</rhyme>,</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">ô Hoe bekoorlijk is uw <rhyme label="a" type="m">vreugd</rhyme>,</l>

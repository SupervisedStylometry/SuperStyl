  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">AEn teykenen men wel sal <rhyme label="a" type="f">kennen</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Al die geloovigh sijn te <rhyme label="b" type="m">saem</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">De Duyvels sullen sy <rhyme label="a" type="f" corresp="#s1:l1">uyt-wennen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">En die verdrijven door mijn <rhyme label="b" type="m" corresp="#s1:l2">Naem</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Sy sullen slangen doen <rhyme label="a" type="f">verdwijnen</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Sy sullen spreeken nieuwe <rhyme label="b" type="m">tael</rhyme>;</l>
        <l id="s2:l3" met="4" type="-+">En soo sy drinken yet <rhyme label="a" type="f" corresp="#s2:l1">fenijne</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">'t Sal haer niet schaden <rhyme label="b" type="m" corresp="#s2:l2">t'eenemael</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">De sieken sullen sy <rhyme label="a" type="f">geneesen</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Met op-leggen van hare <rhyme label="b" type="m">handt</rhyme>;</l>
        <l id="s3:l3" met="4" type="-+">En siet, ik sal met u-lie <rhyme label="a" type="f" corresp="#s3:l1">weesen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Soo langh de Eeuwen hebben <rhyme label="b" type="m" corresp="#s3:l2">stant</rhyme>.</l>
      </lg>
    </lg>

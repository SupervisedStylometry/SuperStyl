  <author>Leenaert Clock</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Dancklijck eenmoedich // prijst Godt den <rhyme label="a" type="m">Vaer</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Want hy seer goedich // is <rhyme label="a" type="m" corresp="#s1:l1">voorwaer</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Sijn  gonst om prijsen // gaet hy <rhyme label="b" type="m">eenpaer</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Ons nu bewijsen // int <rhyme label="b" type="m" corresp="#s1:l3">openbaer</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Och vrienden ghy //  singht doch met <rhyme label="c" type="m">my</rhyme></l>
        <l id="s1:l6" met="5" type="-+">Van herten bly // danckt doch Godt <rhyme label="b" type="m" corresp="#s1:l3">allegaer</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Int huys des Heeren // sullen <rhyme label="a" type="m">bereyt</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Wy gaen met eeren // soo hy <rhyme label="a" type="m" corresp="#s2:l1">toeseyt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Om vreuchd’ verwinnen // hier boven <rhyme label="b" type="m">gaen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Ons voeren binnen // de poorten <rhyme label="b" type="m" corresp="#s2:l3">staen</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Blijft op den ganck // u leven <rhyme label="c" type="m">lanck</rhyme>,</l>
        <l id="s2:l6" met="5" type="-+">Al zijn wy kranck // die hop’ v’steect ons <rhyme label="b" type="m" corresp="#s2:l3">saen</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Een stadt ghebouwen // heerlijck en <rhyme label="a" type="m">breyt</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Haer Borghers houwen // die  <rhyme label="a" type="m" corresp="#s3:l1">eenicheyt</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Men mach by trouwen //  seer hoogh <rhyme label="b" type="m">gestelt</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Haer licht aenschouwen // het lucht int <rhyme label="b" type="m" corresp="#s3:l3">veldt</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Och vrienden jent // maeckt oock <rhyme label="c" type="m">bekent</rhyme>,</l>
        <l id="s3:l6" met="5" type="-+">Dat ghy nu bent //  borgers elck als een <rhyme label="b" type="m" corresp="#s3:l3">helt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Recht doch u wesen // als Christen <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Aen Ziel ghepresen // hert en <rhyme label="a" type="m" corresp="#s4:l1">ghemoet</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Als d’eerste deden // met Ziel en <rhyme label="b" type="m">lijf</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Eenich in vreden // te samen <rhyme label="b" type="m" corresp="#s4:l3">stijf</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Gods glory schoon // spant daer de <rhyme label="c" type="m">Croon</rhyme></l>
        <l id="s4:l6" met="5" type="-+">In s’Hemels Troon // sal blincken haer <rhyme label="b" type="m" corresp="#s4:l3">bedrijf</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">In dese mueren, eert Godt den <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Lieft sonder trueren // elckandren <rhyme label="a" type="m" corresp="#s5:l1">meer</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Gaet opwaerts beden // voor Godt <rhyme label="b" type="m">aldaer</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Drijmael t’gheeft reden // int nieuwe <rhyme label="b" type="m" corresp="#s5:l3">Iaer</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Hem offer bringht // danckt, loeft en <rhyme label="c" type="m">singht</rhyme>,</l>
        <l id="s5:l6" met="5" type="-+">Dit vyer ontsinckt // de liefde in ons <rhyme label="b" type="m" corresp="#s5:l3">claer</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Climt op de graden // volheyt der <rhyme label="a" type="m">deucht</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Dat ghy gheraden // t’gheloove <rhyme label="a" type="m" corresp="#s6:l1">meucht</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Betuygen waerlijck // als volck Gods <rhyme label="b" type="m">vroet</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Wt Godt schijnbaerlijck // ghesproken <rhyme label="b" type="m" corresp="#s6:l3">soet</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Met cracht en daet // soo Christus <rhyme label="c" type="m">raet</rhyme>,</l>
        <l id="s6:l6" met="5" type="-+">Elck huys bestaet // dat men so bouwen <rhyme label="b" type="m" corresp="#s6:l3">doet</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Kent, wilt ghevoelen // daer zijn <rhyme label="a" type="m">gheset</rhyme></l>
        <l id="s7:l2" met="4" type="-+">De Rechter-stoelen // nae rechter <rhyme label="a" type="m" corresp="#s7:l1">Wet</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Oordeel te gheven //  in Davids <rhyme label="b" type="m">huys</rhyme>.</l>
        <l id="s7:l4" met="4" type="-+">Nae een elcx leven // sonder <rhyme label="b" type="m" corresp="#s7:l3">abuys</rhyme></l>
        <l id="s7:l5" met="4" type="-+">Crijcht elcken slecht // daer loon nae <rhyme label="c" type="m">recht</rhyme>,</l>
        <l id="s7:l6" met="5" type="-+">D’onnutte knecht // sal daer worden <rhyme label="b" type="m" corresp="#s7:l3">confuys</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Perfeckten vrede // soo’t Godt <rhyme label="a" type="m">behaeght</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Crijcht niemandt mede // dan die nu <rhyme label="a" type="m" corresp="#s8:l1">draeght</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Liefde te vooren // int herte hier <rhyme label="b" type="m">by</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Reyn uyt vercooren // sonder  <rhyme label="b" type="m" corresp="#s8:l3">party</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Godtloosen siet // en hebbens <rhyme label="c" type="m">niet</rhyme>,</l>
        <l id="s8:l6" met="5" type="-+">Want vrede diet // Christus den sijnen <rhyme label="b" type="m" corresp="#s8:l3">vry</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Ick wensch u t’samen // vrede van <rhyme label="a" type="m">Godt</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Liefde met namen // t’nieuwe <rhyme label="a" type="m" corresp="#s9:l1">ghebodt</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Naer Schrifts verclaren // <rhyme label="b" type="m">Ierusalem</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Wilt openbaren // volght Christi <rhyme label="b" type="m" corresp="#s9:l3">stem</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">In deucht gaet voort // al nae sijn <rhyme label="c" type="m">woort</rhyme>,</l>
        <l id="s9:l6" met="5" type="-+">Niet anders hoort // en sal behaghen <rhyme label="b" type="m" corresp="#s9:l3">hem</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">En in u toorens // breete ende <rhyme label="a" type="m">smal</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Moet zijn te voorens, vred’ over <rhyme label="a" type="m" corresp="#s10:l1">al</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Daer men behoedich // de wapens <rhyme label="b" type="m">hout</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Bereydt en spoedich // seer <rhyme label="b" type="m" corresp="#s10:l3">menichfout</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Om de trompet // te blasen <rhyme label="c" type="m">net</rhyme>,</l>
        <l id="s10:l6" met="5" type="-+">Zijt ghy gheset // t’volck Gods is <rhyme label="b" type="m" corresp="#s10:l3">betrout</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Treedt op u voeten // t’gheluydt nu <rhyme label="a" type="m">staet</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Ontwaken moeten // sy niet te <rhyme label="a" type="m" corresp="#s11:l1">laet</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Den vred’ wilt preken //  straft nu by <rhyme label="b" type="m">tijt</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Soo onbesweken // u Ziel <rhyme label="b" type="m" corresp="#s11:l3">bevryt</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Gods volck certeyn // de kudde <rhyme label="c" type="m">cleyn</rhyme></l>
        <l id="s11:l6" met="5" type="-+">Bewaert nu reyn // want ghy haer wachter <rhyme label="b" type="m" corresp="#s11:l3">zijt</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">En  wassen, groeyen // moet ghy Gods <rhyme label="a" type="m">stadt</rhyme></l>
        <l id="s12:l2" met="4" type="-+">En voerich bloeyen // te wensch u <rhyme label="a" type="m" corresp="#s12:l1">dat</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Om t’lof te bringhen // voor Gods <rhyme label="b" type="m">aenschijn</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Is nu het singhen // en t’wenschen <rhyme label="b" type="m" corresp="#s12:l3">mijn</rhyme></l>
        <l id="s12:l5" met="4" type="-+">Vreedlijck vergaert //  Godtlijck <rhyme label="c" type="m">gheaert</rhyme>,</l>
        <l id="s12:l6" met="5" type="-+">So Schrift verclaert // met Christen sinnen <rhyme label="b" type="m" corresp="#s12:l3">fijn</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Recht op’t vervallen, bindt met der <rhyme label="a" type="m">hant</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Heer, onder allen, des vredens <rhyme label="a" type="m" corresp="#s13:l1">bant</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Bouwen, vergaren // souden wy <rhyme label="b" type="m">sterck</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Als trou dienaren // soo aen u <rhyme label="b" type="m" corresp="#s13:l3">Kerck</rhyme>,</l>
        <l id="s13:l5" met="4" type="-+">Iae als een man // timmeren <rhyme label="c" type="m">dan</rhyme>,</l>
        <l id="s13:l6" met="5" type="-+">Gheen vyant can // ons dan beletten <rhyme label="b" type="m" corresp="#s13:l3">t’wercl</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Staet om verhogen // Heer by met <rhyme label="a" type="m">cracht</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">Want onvermoghen // is ons <rhyme label="a" type="m" corresp="#s14:l1">macht</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Gheensins verblijden // en moghen <rhyme label="b" type="m">wy</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">Helpt ghy hier strijden // aen onse <rhyme label="b" type="m" corresp="#s14:l3">zy</rhyme>,</l>
        <l id="s14:l5" met="4" type="-+">In u macht staet // ons cracht en <rhyme label="c" type="m">daet</rhyme>,</l>
        <l id="s14:l6" met="5" type="-+">Verwinnen laet // ons doch niet moede <rhyme label="b" type="m" corresp="#s14:l3">bly</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Salicheyt nacy // ghy Christen <rhyme label="a" type="m">schoon</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">Zy u, soeckt stacy // in s’Hemels <rhyme label="a" type="m" corresp="#s15:l1">throon</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">Dat ghy met namen // sonder <rhyme label="b" type="m">beswijck</rhyme>,</l>
        <l id="s15:l4" met="4" type="-+">Soo meucht versamen // int <rhyme label="b" type="m" corresp="#s15:l3">Hemelrijck</rhyme>,</l>
        <l id="s15:l5" met="4" type="-+">Liefdens vermaen // heeft dit <rhyme label="c" type="m">ghedaen</rhyme>,</l>
        <l id="s15:l6" met="5" type="-+">Neemt het doch aen // van my soo al <rhyme label="b" type="m" corresp="#s15:l3">gelijck</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

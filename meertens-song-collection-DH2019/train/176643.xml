    <melody>Wenn mein Stündlein vorhanden ist</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Hendrik Rintjes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Ghy die den Heere Christo <rhyme label="a" type="m">dient</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Dient hem uyt al u <rhyme label="b" type="f">krachten</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">En wordt doch niet des werelts <rhyme label="a" type="m" corresp="#s1:l1">vrient</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Al sou zy u <rhyme label="b" type="f" corresp="#s1:l2">verachten</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">Tot Kruys en lijden u <rhyme label="c" type="m">ghewent</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Al soudt gy sterven van <rhyme label="c" type="m" corresp="#s1:l5">ellendt</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">En van verdriet <rhyme label="b" type="f" corresp="#s1:l2">versmachten</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Den schalcken vyant fielt u <rhyme label="a" type="m">voor</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Rijckdom, wellustigh <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Soo gy hem wilt gheven <rhyme label="a" type="m" corresp="#s2:l1">ghehoor</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">So naeckt u droevigh <rhyme label="b" type="f" corresp="#s2:l2">beven</rhyme>:</l>
        <l id="s2:l5" met="4" type="-+">Maer gheeft hem nimmermeer <rhyme label="c" type="m">consent</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Al soudt ghy sterven van <rhyme label="c" type="m" corresp="#s2:l5">ellent</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Godt sal ‘t u weder <rhyme label="b" type="f" corresp="#s2:l2">gheven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">‘t Is al bedroch en <rhyme label="a" type="m">ydelheyt</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Wat dat hy gaet <rhyme label="b" type="f">beschicken</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">De gantsche werelt hy <rhyme label="a" type="m" corresp="#s3:l1">verleyt</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Met al sijn loose <rhyme label="b" type="f" corresp="#s3:l2">stricken</rhyme>:</l>
        <l id="s3:l5" met="4" type="-+">Maer ist dat hy u komt <rhyme label="c" type="m">ontrent</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Al soudt ghy sterven van <rhyme label="c" type="m" corresp="#s3:l5">ellent</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">En laet u niet <rhyme label="b" type="f" corresp="#s3:l2">verschricken</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Hy doet wel veel beloften <rhyme label="a" type="m">hoogh</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Om u hier te <rhyme label="b" type="f">bekooren</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">‘t Is anders niet dan schoon voor ‘t <rhyme label="a" type="m" corresp="#s4:l1">oogh</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">‘t Inwendigh gaet <rhyme label="b" type="f" corresp="#s4:l2">verlooren</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Och! waer u zijn bedrogh <rhyme label="c" type="m">bekent</rhyme>:</l>
        <l id="s4:l6" met="4" type="-+">Al soudt gy sterven van <rhyme label="c" type="m" corresp="#s4:l5">ellent</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Ghy soudt na hem niet <rhyme label="b" type="f" corresp="#s4:l2">hooren</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Door strenghe tyranny wel <rhyme label="a" type="m">eer</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Hy veel den schat <rhyme label="b" type="f">ontsteelden</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Maer nu verderft hy zielen <rhyme label="a" type="m" corresp="#s5:l1">meer</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Door ‘t wel-lustigh <rhyme label="b" type="f" corresp="#s5:l2">in-beelden</rhyme>:</l>
        <l id="s5:l5" met="4" type="-+">Dus op dat hy u niet en <rhyme label="c" type="m">schent</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Al soudt ghy sterven van <rhyme label="c" type="m" corresp="#s5:l5">ellent</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Wacht u van aerdsche <rhyme label="b" type="f" corresp="#s5:l2">weelden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Eylaes! wat is de aerdsche <rhyme label="a" type="m">lust</rhyme>?</l>
        <l id="s6:l2" met="3" type="-+">Hoe haest is sy <rhyme label="b" type="f">vervloghen</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">En als de ziele is <rhyme label="a" type="m" corresp="#s6:l1">ontrust</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Soo vint sy haer <rhyme label="b" type="f" corresp="#s6:l2">bedroghen</rhyme>.</l>
        <l id="s6:l5" met="4" type="-+">Denckt altijdt op dat laetste <rhyme label="c" type="m">ende</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Al soudt ghy sterven van <rhyme label="c" type="m" corresp="#s6:l5">ellende</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Ghy soudt niet dolen <rhyme label="b" type="f" corresp="#s6:l2">moghen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">En soeckt gheen troost in ghelt en <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Verkiest tot uwer <rhyme label="b" type="f">baten</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Veel liever Christi <rhyme label="a" type="m" corresp="#s7:l1">arremoet</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Op Godt wilt u <rhyme label="b" type="f" corresp="#s7:l2">verlaten</rhyme>/</l>
        <l id="s7:l5" met="4" type="-+">Sijn liefde in u herte <rhyme label="c" type="m">prent</rhyme>:</l>
        <l id="s7:l6" met="4" type="-+">Al soudt ghy sterven van <rhyme label="c" type="m" corresp="#s7:l5">ellent</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Wilt giericheyt doch <rhyme label="b" type="f" corresp="#s7:l2">haten</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Betrouwt op Gods belosten <rhyme label="a" type="m">vast</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Hy sal u niet <rhyme label="b" type="f">beswijcken</rhyme></l>
        <l id="s8:l3" met="4" type="-+">In al u noodt en <rhyme label="a" type="m" corresp="#s8:l1">overlast</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Sijn trouwe sal wel <rhyme label="b" type="f" corresp="#s8:l2">blijcken</rhyme>.</l>
        <l id="s8:l5" met="4" type="-+">Doch al scheen hy te zijn <rhyme label="c" type="m">absent</rhyme>:</l>
        <l id="s8:l6" met="4" type="-+">Al soudt ghy sterven van <rhyme label="c" type="m" corresp="#s8:l5">ellent</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">En wilt van hem niet <rhyme label="b" type="f" corresp="#s8:l2">wijcken</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Wat noot ist, datmen hier wat <rhyme label="a" type="m">lijt</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Een tijdelijck <rhyme label="b" type="f">benouwen</rhyme>?</l>
        <l id="s9:l3" met="4" type="-+">Wat ist meer dan eene uyrtje <rhyme label="a" type="m" corresp="#s9:l1">tijdt</rhyme></l>
        <l id="s9:l4" met="3" type="-+">By d’eeuwigheyt te <rhyme label="b" type="f" corresp="#s9:l2">houwen</rhyme>?</l>
        <l id="s9:l5" met="4" type="-+">Laet komen lijden en <rhyme label="c" type="m">torment</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Al soudt ghy sterven van <rhyme label="c" type="m" corresp="#s9:l5">ellent</rhyme></l>
        <l id="s9:l7" met="3" type="-+">‘t En sal u niet <rhyme label="b" type="f" corresp="#s9:l2">berouwen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Denckt op die schoone <rhyme label="a" type="m">heerlijckheyt</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Die niet en is te <rhyme label="b" type="f">boeten</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Die Godt de sijne heeft <rhyme label="a" type="m" corresp="#s10:l1">bereyt</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Die hier nu lijden <rhyme label="b" type="f" corresp="#s10:l2">moeten</rhyme>:</l>
        <l id="s10:l5" met="4" type="-+">Denckt om de vreught in ‘s Hemels <rhyme label="c" type="m">tent</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Al soudt ghy sterven van <rhyme label="c" type="m" corresp="#s10:l5">ellent</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Den loon sal ‘t al <rhyme label="b" type="f" corresp="#s10:l2">versoeten</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

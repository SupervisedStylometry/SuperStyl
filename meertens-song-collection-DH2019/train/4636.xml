  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">LOoft God en wildu <rhyme label="a" type="f">ras-sen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">O Christen zoo ’t <rhyme label="b" type="m">behoordt</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Na dien ghy <rhyme label="a" type="f" corresp="#s1:l1">afgewassen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Door ’t bad van <rhyme label="b" type="m" corresp="#s1:l2">weer-geboort</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Nu zijt van alle <rhyme label="b" type="m" corresp="#s1:l2">soort</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Der zonden en daer <rhyme label="c" type="m">deur</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Een al te hoge <rhyme label="c" type="m" corresp="#s1:l6">keur</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Van gracij kreegt te <rhyme label="c" type="m" corresp="#s1:l6">beur</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Dank heb het starke <rhyme label="a" type="f">water</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Vermengt met Christus <rhyme label="b" type="m">bloed</rhyme>;</l>
        <l id="s2:l3" met="3" type="-+">Daer d’uitverkoren <rhyme label="a" type="f" corresp="#s2:l1">Mater</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Der Kerken schuld, en <rhyme label="b" type="m" corresp="#s2:l2">boet</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Te zaemen mee <rhyme label="b" type="m" corresp="#s2:l2">vergoedt</rhyme>:</l>
        <l id="s2:l6" met="3" type="-+">Want dit was Davids <rhyme label="c" type="m">hoop</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Als Hy zoo nae den <rhyme label="c" type="m" corresp="#s2:l6">Doop</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Verlangde van <rhyme label="c" type="m" corresp="#s2:l6">Hysoop</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Hysoop die hem doet <rhyme label="a" type="f">witten</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Het bloed-rood boven <rhyme label="b" type="m">snee</rhyme>;</l>
        <l id="s3:l3" met="3" type="-+">En nae de ziel <rhyme label="a" type="f" corresp="#s3:l1">bezitten</rhyme></l>
        <l id="s3:l4" met="3" type="-+">De alderzoetste <rhyme label="b" type="m" corresp="#s3:l2">vree</rhyme>;</l>
        <l id="s3:l5" met="3" type="-+">Iae werpen inde <rhyme label="b" type="m" corresp="#s3:l2">zee</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Hem doen zou alle <rhyme label="c" type="m">quaed</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">’t Welk God voor heen <rhyme label="c" type="m" corresp="#s3:l6">gehaet</rhyme></l>
        <l id="s3:l8" met="3" type="-+">In hem had van <rhyme label="c" type="m" corresp="#s3:l6">misdaed</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Een afgrond van <rhyme label="a" type="f">genade</rhyme>!</l>
        <l id="s4:l2" met="3" type="-+">Die ons, een eeuwig <rhyme label="b" type="m">merk</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Indrukkende, met <rhyme label="a" type="f" corresp="#s4:l1">daden</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Gedachten, woord’ en <rhyme label="b" type="m" corresp="#s4:l2">werk</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Aen Christo, en zijn <rhyme label="b" type="m" corresp="#s4:l2">Kerk</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Verbind; om nae ’t <rhyme label="c" type="m">verbond</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Van Goods beleefde <rhyme label="c" type="m" corresp="#s4:l6">mond</rhyme>;</l>
        <l id="s4:l8" met="3" type="-+">Te leven ’t alder <rhyme label="c" type="m" corresp="#s4:l6">stond</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Dat w’ons met alle <rhyme label="a" type="f">krachten</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Van lichaem ende <rhyme label="b" type="m">geest</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Van zonden dan wel <rhyme label="a" type="f" corresp="#s5:l1">wachten</rhyme>;</l>
        <l id="s5:l4" met="3" type="-+">En pogen minst en <rhyme label="b" type="m" corresp="#s5:l2">meest</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Voor ’t uitterste <rhyme label="b" type="m" corresp="#s5:l2">bevreest</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Te beven <rhyme label="c" type="m">onbesmet</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Nae d’alderliefste <rhyme label="c" type="m" corresp="#s5:l6">wet</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Die ons den Hemel <rhyme label="c" type="m" corresp="#s5:l6">zet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">En van des Hemels <rhyme label="a" type="f">wegen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">De Ov’righeiden <rhyme label="b" type="m">mee</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Die Godes riken <rhyme label="a" type="f" corresp="#s6:l1">zegen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Gesteldt heeft in haer <rhyme label="b" type="m" corresp="#s6:l2">stee</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Want die de Christen <rhyme label="b" type="m" corresp="#s6:l2">vree</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Bewaeren wil, die <rhyme label="c" type="m">moet</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Met een bereyde <rhyme label="c" type="m" corresp="#s6:l6">voet</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Belopen ’t hoogste <rhyme label="c" type="m" corresp="#s6:l6">goed</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Die dan deurt Doopsel <rhyme label="a" type="f">zeggen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">De ziel te wezen <rhyme label="b" type="m">vry</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Van alle wetten; <rhyme label="a" type="f" corresp="#s7:l1">leggen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">U voor een <rhyme label="b" type="m" corresp="#s7:l2">Kettery</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">Gelooftze niet: want <rhyme label="b" type="m" corresp="#s7:l2">zy</rhyme></l>
        <l id="s7:l6" met="3" type="-+">De Christelijkke <rhyme label="c" type="m">peis</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">U niet dan nae den <rhyme label="c" type="m" corresp="#s7:l6">eisch</rhyme></l>
        <l id="s7:l8" met="3" type="-+">En preken van het <rhyme label="c" type="m" corresp="#s7:l6">vleisch</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

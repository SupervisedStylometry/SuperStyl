  <author>Pieter Datheen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">BEWAERT o Heer myn <rhyme label="a" type="m">recht</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Want voorwaer uwe <rhyme label="a" type="m" corresp="#s1:l1">kneckt</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Wandelt in onschuld nu voort <rhyme label="b" type="m">aen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Op v staet myn <rhyme label="c" type="f">betrauwen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">In al myn swaer <rhyme label="c" type="f" corresp="#s1:l4">benauwen</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Daer om en sal ick niet <rhyme label="b" type="m" corresp="#s1:l3">vergaen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Heer doersoeckt myn <rhyme label="a" type="m">gemoedt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Proeft my in <rhyme label="a" type="m" corresp="#s2:l1">teghenspoedt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Aen den proefsteen in myn <rhyme label="b" type="m">elendt</rhyme>.</l>
        <l id="s2:l4" met="3" type="-+">Myn hert' end oock myn <rhyme label="c" type="f">nieren</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Proeft doch Heer met den <rhyme label="c" type="f" corresp="#s2:l4">vieren</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Op dat ick recht werde <rhyme label="b" type="m" corresp="#s2:l3">bekent</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Want Heer die ooghen <rhyme label="a" type="m">myn</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Vastlick gheslaegen <rhyme label="a" type="m" corresp="#s3:l1">sijn</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Op uwe ghenaed' end <rhyme label="b" type="m">goetheit</rhyme>.</l>
        <l id="s3:l4" met="3" type="-+">End ick leyde myn <rhyme label="c" type="f">leuen</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Nae den reghel <rhyme label="c" type="f" corresp="#s3:l4">voorschreuen</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Ick wandel in uwe <rhyme label="b" type="m" corresp="#s3:l3">waerheit</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Der leughenspreekers <rhyme label="a" type="m">boos</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Versaemelingh' seer <rhyme label="a" type="m" corresp="#s4:l1">loos</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Ick altydt O Heer haeten <rhyme label="b" type="m">sal</rhyme>.</l>
        <l id="s4:l4" met="3" type="-+">Met schalcke menschen <rhyme label="c" type="f">listigh</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Die valsch sijn ende <rhyme label="c" type="f" corresp="#s4:l4">twistigh</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Hebb' ick niet ghemeyns <rhyme label="b" type="m" corresp="#s4:l3">oueral</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Heer, der godtloosen <rhyme label="a" type="m">kerck</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Haer Ä™rghheit end haer <rhyme label="a" type="m" corresp="#s5:l1">werck</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Haet ick altyt wt s'herten <rhyme label="b" type="m">grondt</rhyme>.</l>
        <l id="s5:l4" met="3" type="-+">By den schalcken end <rhyme label="c" type="f">boosen</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Noch oock by den <rhyme label="c" type="f" corresp="#s5:l4">godtloosen</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">En sitt' ick Heer tot gheener <rhyme label="b" type="m" corresp="#s5:l3">stond</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ick wassch' myn handen <rhyme label="a" type="m">reyn</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Met ontschult in't <rhyme label="a" type="m" corresp="#s6:l1">ghemeyn</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Ick gheue my tot t goed <rhyme label="b" type="m">eenpaer</rhyme>.</l>
        <l id="s6:l4" met="3" type="-+">End Godt tot v' <rhyme label="c" type="f">offranden</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Schoon end seer veeler <rhyme label="c" type="f" corresp="#s6:l4">handen</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Die men doet op uwen <rhyme label="b" type="m" corresp="#s6:l3">autaer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Op dat ick daer v' <rhyme label="a" type="m">eer'</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">End heerlickheit (O <rhyme label="a" type="m" corresp="#s7:l1">Heer</rhyme>)</l>
        <l id="s7:l3" met="4" type="-+">Singen magh ouerluydt end <rhyme label="b" type="m">klaer</rhyme>.</l>
        <l id="s7:l4" met="3" type="-+">End' uwe <rhyme label="c" type="f">wonderwercken</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Seer groot, so men kan <rhyme label="c" type="f" corresp="#s7:l4">mercken</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Magh verkonden in't <rhyme label="b" type="m" corresp="#s7:l3">openbaer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Ick heb Heere <rhyme label="a" type="m">bemindt</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">End hertelick <rhyme label="a" type="m" corresp="#s8:l1">versint</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">V schoon huys daer ghy wonen <rhyme label="b" type="m">wilt</rhyme>.</l>
        <l id="s8:l4" met="3" type="-+">Die plaets daer men <rhyme label="c" type="f">verkondet</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">End oock altydt <rhyme label="c" type="f" corresp="#s8:l4">vermondet</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Vwen lof end prys Heere <rhyme label="b" type="m" corresp="#s8:l3">milt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Laett my niet sijn <rhyme label="a" type="m">ghetelt</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Geplaeght noch oock <rhyme label="a" type="m" corresp="#s9:l1">gequelt</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Met den boosdaders <rhyme label="b" type="m">obstinaet</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Neemt doch niet wegh myn <rhyme label="c" type="f">leuen</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Met dien die hen <rhyme label="c" type="f" corresp="#s9:l4">begheuen</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Tot bloedtstorten wt nijdt end <rhyme label="b" type="m" corresp="#s9:l3">haet</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Die verraders vol <rhyme label="a" type="m">nijdt</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Wt listen, haet end <rhyme label="a" type="m" corresp="#s10:l1">spijt</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Verklaeghen my met onrecht <rhyme label="b" type="m">groot</rhyme>.</l>
        <l id="s10:l4" met="3" type="-+">Sy loopen ende <rhyme label="c" type="f">slaeuen</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Om gheschencken end <rhyme label="c" type="f" corresp="#s10:l4">gaeuen</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Die hen haest bringen tot der <rhyme label="b" type="m" corresp="#s10:l3">doodt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Maer ick wil Heere <rhyme label="a" type="m">gaen</rhyme>.</l>
        <l id="s11:l2" met="3" type="-+">Vromelick end <rhyme label="a" type="m" corresp="#s11:l1">bestaen</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">In eenvoudt, met een oprecht <rhyme label="b" type="m">hert'</rhyme>.</l>
        <l id="s11:l4" met="3" type="-+">Weest my doch nu <rhyme label="c" type="f">genaedigh</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">O myn Godt seer <rhyme label="c" type="f" corresp="#s11:l4">weldaedigh</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">Verlost my wt angst ende <rhyme label="b" type="m" corresp="#s11:l3">smert</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Ick sie Heer dat ghy <rhyme label="a" type="m">my</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Hebt opgerecht, end <rhyme label="a" type="m" corresp="#s12:l1">vry</rhyme></l>
        <l id="s12:l3" met="4" type="-+">Gestelt, op uwen wegh <rhyme label="b" type="m">eerbaer</rhyme>.</l>
        <l id="s12:l4" met="3" type="-+">Dies wil ick v Heer <rhyme label="c" type="f">prysen</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">Singen end eer <rhyme label="c" type="f" corresp="#s12:l4">bewysen</rhyme>,</l>
        <l id="s12:l6" met="4" type="-+">In't midden uwes volcks <rhyme label="b" type="m" corresp="#s12:l3">eenpaer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

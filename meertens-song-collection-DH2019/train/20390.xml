  <author>B. Targier, Anthony Jansen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="+-">IOnghe <rhyme label="a" type="f">herten</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Hoe langh wilt ghy noch <rhyme label="b" type="f">jaghen</rhyme></l>
        <l id="s1:l3" met="2" type="+-">Nae snoo' <rhyme label="c" type="m">ydelheydt</rhyme>?</l>
        <l id="s1:l4" met="2" type="+-">Daer veel <rhyme label="a" type="f" corresp="#s1:l1">smerten</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Ellend', en ramp, en <rhyme label="b" type="f" corresp="#s1:l2">klaghen</rhyme></l>
        <l id="s1:l6" met="2" type="-+">V zijn <rhyme label="c" type="m" corresp="#s1:l3">bereydt</rhyme>:</l>
        <l id="s1:l7" met="2" type="-+">Ey soeckt een <rhyme label="d" type="m">straet</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Daer yder veyligh <rhyme label="d" type="m" corresp="#s1:l7">gaet</rhyme>;</l>
        <l id="s1:l9" met="2" type="-+">Soeckt rechte <rhyme label="e" type="f">weghen</rhyme>,</l>
        <l id="s1:l10" met="2" type="-+">En weest <rhyme label="e" type="f" corresp="#s1:l9">gheneghen</rhyme></l>
        <l id="s1:l11" met="2" type="+-">Te streven <rhyme label="e" type="f" corresp="#s1:l9">teghen</rhyme></l>
        <l id="s1:l12" met="5" type="-+">Vlees, Duyvel, Hel en Doodt, en Doodt, en <rhyme label="f" type="m">Doodt</rhyme>:</l>
        <l id="s1:l13" met="4" type="+-">Of ghy komt in groote <rhyme label="f" type="m" corresp="#s1:l12">noodt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="+-">Jonghe <rhyme label="a" type="f">sinnen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Bedenckt u dartel <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s2:l3" met="2" type="+-">En let op u <rhyme label="c" type="m">tijdt</rhyme>:</l>
        <l id="s2:l4" met="2" type="+-">Wilt niet <rhyme label="a" type="f" corresp="#s2:l1">Minnen</rhyme></l>
        <l id="s2:l5" met="3" type="-+">'t Gheen u haest gaet <rhyme label="b" type="f" corresp="#s2:l2">begheven</rhyme>,</l>
        <l id="s2:l6" met="2" type="-+">En daedlijck <rhyme label="c" type="m" corresp="#s2:l3">slijt</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">Maer mint, o <rhyme label="d" type="m">Jeught</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">De witte reyne <rhyme label="d" type="m" corresp="#s2:l7">Deught</rhyme>!</l>
        <l id="s2:l9" met="2" type="-+">Mint Godt de <rhyme label="e" type="f">Heere</rhyme>,</l>
        <l id="s2:l10" met="2" type="-+">En oock sijn <rhyme label="e" type="f" corresp="#s2:l9">Leere</rhyme>,</l>
        <l id="s2:l11" met="2" type="+-">En wilt u <rhyme label="e" type="f" corresp="#s2:l9">keere</rhyme></l>
        <l id="s2:l12" met="5" type="-+">Van ydele gheneught, gheneught, <rhyme label="f" type="m">gheneught</rhyme>,</l>
        <l id="s2:l13" met="4" type="+-">Schept gheen lust als in de <rhyme label="f" type="m" corresp="#s2:l12">Deught</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="+-">Jonghe <rhyme label="a" type="f">lieden</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Denckt op 't gheween der <rhyme label="b" type="f">Ooghen</rhyme>,</l>
        <l id="s3:l3" met="2" type="+-">Dien droevighen <rhyme label="c" type="m">dagh</rhyme>,</l>
        <l id="s3:l4" met="2" type="+-">Die <rhyme label="a" type="f" corresp="#s3:l1">ontvlieden</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Niemandt hier nae sal <rhyme label="b" type="f" corresp="#s3:l2">moghen</rhyme>,</l>
        <l id="s3:l6" met="2" type="-+">Of immer <rhyme label="c" type="m" corresp="#s3:l3">magh</rhyme>:</l>
        <l id="s3:l7" met="2" type="-+">Die hier zijn <rhyme label="d" type="m">tijdt</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Staegh Goddeloos <rhyme label="d" type="m" corresp="#s3:l7">verslijt</rhyme>,</l>
        <l id="s3:l9" met="2" type="-+">Sal eens sijn <rhyme label="e" type="f">daghen</rhyme>,</l>
        <l id="s3:l10" met="2" type="-+">Met groot <rhyme label="e" type="f" corresp="#s3:l9">beklaghen</rhyme>,</l>
        <l id="s3:l11" met="2" type="+-">Gheheel <rhyme label="e" type="f" corresp="#s3:l9">verslaghen</rhyme></l>
        <l id="s3:l12" met="5" type="-+">Beschreyen, maer te laet, te laet, te <rhyme label="f" type="m">laet</rhyme>:</l>
        <l id="s3:l13" met="4" type="+-">Dan is voor hem hulp noch <rhyme label="f" type="m" corresp="#s3:l12">raet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="+-">Jonghe <rhyme label="a" type="f">spruyten</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Schickt u tot eer en <rhyme label="b" type="f">deughde</rhyme>,</l>
        <l id="s4:l3" met="2" type="+-">En beyd niet <rhyme label="c" type="m">langh</rhyme>;</l>
        <l id="s4:l4" met="2" type="+-">Stoot doch <rhyme label="a" type="f" corresp="#s4:l1">buyten</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Al 's wereldts dart'le <rhyme label="b" type="f" corresp="#s4:l2">vreughde</rhyme>,</l>
        <l id="s4:l6" met="2" type="-+">Eer 't u wordt <rhyme label="c" type="m" corresp="#s4:l3">bangh</rhyme>:</l>
        <l id="s4:l7" met="2" type="-+">Wanneer 't <rhyme label="d" type="m">gheschal</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Van d'Eng'len komen <rhyme label="d" type="m" corresp="#s4:l7">sal</rhyme>,</l>
        <l id="s4:l9" met="2" type="-+">Dat ghy dan <rhyme label="e" type="f">deughdigh</rhyme>,</l>
        <l id="s4:l10" met="2" type="-+">Dat ghy dan <rhyme label="e" type="f" corresp="#s4:l9">jeughdigh</rhyme>,</l>
        <l id="s4:l11" met="2" type="+-">Dat ghy dan <rhyme label="e" type="f" corresp="#s4:l9">vreughdigh</rhyme></l>
        <l id="s4:l12" met="5" type="-+">Meught voor den Heere staen, en staen, en <rhyme label="f" type="m">staen</rhyme>,</l>
        <l id="s4:l13" met="4" type="+-">En met hem ter Bruyloft <rhyme label="f" type="m" corresp="#s4:l12">gaen</rhyme>.</l>
      </lg>
    </lg>
  </text>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ALs Iesus weeder <rhyme label="a" type="f">keerden</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Twee blinden volghden <rhyme label="b" type="m">hem</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Die haer gesicht <rhyme label="a" type="f" corresp="#s1:l1">begeerden</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En riepen met haer <rhyme label="b" type="m" corresp="#s1:l2">stem</rhyme>:</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">O Jesu, Davids <rhyme label="a" type="f">Soone</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Wy hebben geen <rhyme label="b" type="m">gesicht</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Wilt ons genade <rhyme label="a" type="f" corresp="#s2:l1">toone</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Ons oogen togh <rhyme label="b" type="m" corresp="#s2:l2">verlight</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Looft gy dat ik <rhyme label="a" type="f">vermooge</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Te geeven 't lichte <rhyme label="b" type="m">klaer</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Aen uwe blinde <rhyme label="a" type="f" corresp="#s3:l1">oogen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Seydt Iesus eerst tot <rhyme label="b" type="m" corresp="#s3:l2">haer</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ja, seggen s' alle <rhyme label="a" type="f">beyde</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Laet ons het licht togh <rhyme label="b" type="m">sien</rhyme>.</l>
        <l id="s4:l3" met="3" type="-+">Na uw' geloof, hy <rhyme label="a" type="f" corresp="#s4:l1">seyde</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Soo laet dan u <rhyme label="b" type="m" corresp="#s4:l2">geschien</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Haer oogen werden <rhyme label="a" type="f">oopen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">En sien het lichte <rhyme label="b" type="m">klaer</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Sy sijn straks heen <rhyme label="a" type="f" corresp="#s5:l1">geloopen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">En maekten 't <rhyme label="b" type="m" corresp="#s5:l2">oopenbaer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Nogh sijn sy <rhyme label="a" type="f">aengekomme</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Met een, in welke <rhyme label="b" type="m">was</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Een Duyvel, doof en <rhyme label="a" type="f" corresp="#s6:l1">stomme</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Iesus verjoegh hem <rhyme label="b" type="m" corresp="#s6:l2">ras</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Den Duyvel is <rhyme label="a" type="f">verscheyden</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Den stomme kreegh sijn <rhyme label="b" type="m">spraek</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Waerom de lieden <rhyme label="a" type="f" corresp="#s7:l1">seyden</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Dit is een wonder <rhyme label="b" type="m" corresp="#s7:l2">saek</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">O Heer, wilt ons <rhyme label="a" type="f">verlichten</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">En oopent onsen <rhyme label="b" type="m">mondt</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Op dat wy mogen <rhyme label="a" type="f" corresp="#s8:l1">bichten</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Te deegen onse <rhyme label="b" type="m" corresp="#s8:l2">sondt</rhyme>.</l>
      </lg>
    </lg>
  </text>

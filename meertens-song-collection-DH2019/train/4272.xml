    <melody>Belle qui me vas martyrisant</melody>
    <categories>
      <category translation="formal genres">formele genres</category>
      <category translation="love and sex">liefde en seks</category>
      <category translation="emotions">emoties</category>
    </categories>
  <author>Pieter Lenaerts van der Goes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">PLach mijn jonck <rhyme label="a" type="m">hert</rhyme></l>
        <l id="s1:l2" met="3" type="+-">Dus te versuchten // <rhyme label="b" type="m">swaer</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Gelijck het nu <rhyme label="c" type="m">begint</rhyme>:</l>
        <l id="s1:l4" met="2" type="-+">Soo dat my <rhyme label="a" type="m" corresp="#s1:l1">smert</rhyme></l>
        <l id="s1:l5" met="3" type="+-">Volght, met veel duchten // <rhyme label="b" type="m" corresp="#s1:l2">naer</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Om een maeght wel <rhyme label="c" type="m" corresp="#s1:l3">bemint</rhyme>:</l>
        <l id="s1:l7" met="2" type="-+">Geen soo <rhyme label="c" type="m" corresp="#s1:l3">gesint</rhyme></l>
        <l id="s1:l8" met="2" type="+-">Te voren // <rhyme label="d" type="m">oyt</rhyme>,</l>
        <l id="s1:l9" met="5" type="+-">Geen schoonder kint // en is geboren // <rhyme label="d" type="m" corresp="#s1:l8">noyt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Een sulcken <rhyme label="a" type="m">last</rhyme></l>
        <l id="s2:l2" met="3" type="+-">Doet my der minnen // <rhyme label="b" type="m">godt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Dat ick vertwijffelt <rhyme label="c" type="m">stae</rhyme>:</l>
        <l id="s2:l4" met="2" type="-+">Of sy my <rhyme label="a" type="m" corresp="#s2:l1">vast</rhyme></l>
        <l id="s2:l5" met="3" type="+-">Sal doen gewinnen // <rhyme label="b" type="m" corresp="#s2:l2">t'lodt</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Daer ick om dolen <rhyme label="c" type="m" corresp="#s2:l3">gae</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">Ick <rhyme label="c" type="m" corresp="#s2:l3">overslae</rhyme></l>
        <l id="s2:l8" met="2" type="+-">Mijn smerten <rhyme label="d" type="m">vry</rhyme>,</l>
        <l id="s2:l9" met="5" type="+-">T'blijft even nae // geen troost en is voor <rhyme label="d" type="m" corresp="#s2:l8">my</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Troostbaerder <rhyme label="a" type="m">was</rhyme></l>
        <l id="s3:l2" met="3" type="+-">Sy ten beginne // <rhyme label="b" type="m">dan</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Sy my nu dunct te <rhyme label="c" type="m">zijn</rhyme>:</l>
        <l id="s3:l4" met="2" type="-+">Hoe can soo <rhyme label="a" type="m" corresp="#s3:l1">ras</rhyme></l>
        <l id="s3:l5" met="3" type="+-">Sulcken vriendinne // <rhyme label="b" type="m" corresp="#s3:l2">van</rhyme></l>
        <l id="s3:l6" met="3" type="-+">My keeren haer <rhyme label="c" type="m" corresp="#s3:l3">aenschijn</rhyme>?</l>
        <l id="s3:l7" met="2" type="-+">Meerder <rhyme label="c" type="m" corresp="#s3:l3">gepijn</rhyme></l>
        <l id="s3:l8" met="2" type="+-">Doolyck <rhyme label="d" type="m">bereyt</rhyme>,</l>
        <l id="s3:l9" met="5" type="+-">En heeft noyt mijn // jonck hert neder <rhyme label="d" type="m" corresp="#s3:l8">geleyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Roup ick om <rhyme label="a" type="m">troost</rhyme></l>
        <l id="s4:l2" met="3" type="+-">Wie sal verhooren // <rhyme label="b" type="m">my</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">T'is al om niet <rhyme label="c" type="m">geweent</rhyme>:</l>
        <l id="s4:l4" met="2" type="-+">Voor mijn <rhyme label="a" type="m" corresp="#s4:l1">propoost</rhyme></l>
        <l id="s4:l5" met="3" type="+-">Verstopt haer ooren // <rhyme label="b" type="m" corresp="#s4:l2">sy</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Rebel, en hert <rhyme label="c" type="m" corresp="#s4:l3">versteent</rhyme>:</l>
        <l id="s4:l7" met="2" type="-+">Siet my <rhyme label="c" type="m" corresp="#s4:l3">vercleent</rhyme></l>
        <l id="s4:l8" met="2" type="+-">Arm <rhyme label="d" type="m">serviteur</rhyme>,</l>
        <l id="s4:l9" met="5" type="+-">Ander verleent // sy troost, en my <rhyme label="d" type="m" corresp="#s4:l8">rigeur</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Van <rhyme label="a" type="m">Antheros</rhyme>,</l>
        <l id="s5:l2" met="3" type="+-">Is sy deurschoten // <rhyme label="b" type="m">sterck</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Wiens schickt vercoelen <rhyme label="c" type="m">biedt</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">Dies <rhyme label="a" type="m" corresp="#s5:l1">Atropos</rhyme>.</l>
        <l id="s5:l5" met="3" type="+-">Met een gesloten // <rhyme label="b" type="m" corresp="#s5:l2">zerck</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Fineert al mijn <rhyme label="c" type="m" corresp="#s5:l3">verdriet</rhyme>:</l>
        <l id="s5:l7" met="2" type="-+">Misdeed' ick <rhyme label="c" type="m" corresp="#s5:l3">iet</rhyme>,</l>
        <l id="s5:l8" met="2" type="+-">Dat sy my <rhyme label="d" type="m">haet</rhyme>,</l>
        <l id="s5:l9" met="5" type="+-">Och neen ick niet // dan een reyn hert <rhyme label="d" type="m" corresp="#s5:l8">toestaet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Scheyd' ick dan <rhyme label="a" type="m">met</rhyme></l>
        <l id="s6:l2" met="3" type="+-">Een deerlick schromen // <rhyme label="b" type="m">ach</rhyme>?</l>
        <l id="s6:l3" met="3" type="-+">Wt desen <rhyme label="c" type="m">weder-spoet</rhyme>:</l>
        <l id="s6:l4" met="2" type="-+">Van sulck op <rhyme label="a" type="m" corresp="#s6:l1">set</rhyme></l>
        <l id="s6:l5" met="3" type="+-">Sy haer beromen // <rhyme label="b" type="m" corresp="#s6:l2">mach</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Als een maeght straf <rhyme label="c" type="m" corresp="#s6:l3">verwoet</rhyme>,</l>
        <l id="s6:l7" met="2" type="-+">Mijn reyn <rhyme label="c" type="m" corresp="#s6:l3">gemoet</rhyme></l>
        <l id="s6:l8" met="2" type="+-">Niet falen // <rhyme label="d" type="m">sal</rhyme>,</l>
        <l id="s6:l9" met="5" type="+-">Dwelck met zijn bloet // t'rantsoen betalen // <rhyme label="d" type="m" corresp="#s6:l8">sal</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

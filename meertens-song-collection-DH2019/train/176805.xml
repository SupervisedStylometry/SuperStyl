  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Ick sach de Spruyten <rhyme label="a" type="f">schieten</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Aen Zyons water <rhyme label="b" type="m">kant</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Ten mocht my niet <rhyme label="a" type="f" corresp="#s1:l1">verdrieten</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Haer te bieden de <rhyme label="b" type="m" corresp="#s1:l2">hant</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Op datse net // Werden <rhyme label="c" type="m">verset</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">In ‘s Heeren Hof <rhyme label="d" type="m">bequaem</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">En lieten haer <rhyme label="a" type="f" corresp="#s1:l1">begieten</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">In Iesu Christi <rhyme label="d" type="m" corresp="#s1:l6">Naem</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Sy hebben haer <rhyme label="a" type="f">ghebooghen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Ootmoedich soo men <rhyme label="b" type="m">sach</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Al met weenende <rhyme label="a" type="f" corresp="#s2:l1">ooghen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Voor hem die ‘t al <rhyme label="b" type="m" corresp="#s2:l2">vermach</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">En hebben jent // Al daer <rhyme label="c" type="m">bekent</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Dat sy gheloofden <rhyme label="d" type="m">saen</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Quijtscheldingh’ <rhyme label="a" type="f" corresp="#s2:l1">onbedroghen</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Door Christum te <rhyme label="d" type="m" corresp="#s2:l6">ontfaen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Van allen haren <rhyme label="a" type="f">zonden</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Sy waren groot oft <rhyme label="b" type="m">kleyn</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Doe ginck men haer <rhyme label="a" type="f" corresp="#s3:l1">verkonden</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">In Christus Naem <rhyme label="b" type="m" corresp="#s3:l2">certeyn</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Dat sy bevrijdt // Tot aller <rhyme label="c" type="m">tijdt</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Souden van zonden <rhyme label="d" type="m">zijn</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">En met Christo <rhyme label="a" type="f" corresp="#s3:l1">verbonden</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Als lieve Kinders <rhyme label="d" type="m" corresp="#s3:l6">fijn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Op dat sy ‘t souden <rhyme label="a" type="f">hoopen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Vast en <rhyme label="b" type="m">onwanckeolbaer</rhyme>.</l>
        <l id="s4:l3" met="3" type="-+">Lieten sy haer doen <rhyme label="a" type="f" corresp="#s4:l1">Doopen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">In Christus Naem <rhyme label="b" type="m" corresp="#s4:l2">voorwaer</rhyme>:</l>
        <l id="s4:l5" met="4" type="-+">Hebben hem schoon // Voor Godes <rhyme label="c" type="m">Soon</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Bekent van herten <rhyme label="d" type="m">gront</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Die haer soo dier gink <rhyme label="a" type="f" corresp="#s4:l1">koopen</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Dat sy worden <rhyme label="d" type="m" corresp="#s4:l6">ghesont</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Aen haer is mijn <rhyme label="a" type="f">begheeren</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Dat sy nu wassen <rhyme label="b" type="m">hoort</rhyme></l>
        <l id="s5:l3" met="3" type="-+">In den Lust-Hof des <rhyme label="a" type="f" corresp="#s5:l1">Heeren</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">En brenghen vruchten <rhyme label="b" type="m" corresp="#s5:l2">voort</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Van smaken soet // Als spruyten <rhyme label="c" type="m">goet</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Uyt Godt ghesproten <rhyme label="d" type="m">siet</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Tot lof van sijner <rhyme label="a" type="f" corresp="#s5:l1">eeren</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Oft ten gelt voor hem <rhyme label="d" type="m" corresp="#s5:l6">niet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Des Gheest vruchten wilt <rhyme label="a" type="f">bringhen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Soo langhe als ghy <rhyme label="b" type="m">leeft</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Door d’Enghe-Poorte <rhyme label="a" type="f" corresp="#s6:l1">dringhen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Hoe seer ‘t vleesch teghen <rhyme label="b" type="m" corresp="#s6:l2">streeft</rhyme>:</l>
        <l id="s6:l5" met="4" type="-+">Niet om en kijckt // Doch oock en <rhyme label="c" type="m">wijckt</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Van desen smallen <rhyme label="d" type="m">padt</rhyme>:</l>
        <l id="s6:l7" met="3" type="-+">Soo sult ghy vrolijck <rhyme label="a" type="f" corresp="#s6:l1">singhen</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Al in de schoone <rhyme label="d" type="m" corresp="#s6:l6">Stadt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">De Kroon is <rhyme label="a" type="f">opghehanghen</rhyme>!</l>
        <l id="s7:l2" met="3" type="-+">Siet dat ghy manlijck <rhyme label="b" type="m">strijt</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Dat ghyse meught <rhyme label="a" type="f" corresp="#s7:l1">ontfanghen</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">En eeuwich zijn <rhyme label="b" type="m" corresp="#s7:l2">verblijt</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Ghy sult nae dit // Kleederen <rhyme label="c" type="m">wit</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Aen doen, en zijn <rhyme label="d" type="m">verheucht</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Behoudt ghy reyn u <rhyme label="a" type="f" corresp="#s7:l1">ganghen</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">In uwe teere <rhyme label="d" type="m" corresp="#s7:l6">jeucht</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Dus wilt voorsichtich <rhyme label="a" type="f">wesen</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">In ‘t gheene dat ghy <rhyme label="b" type="m">doet</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">En Godt den Heere <rhyme label="a" type="f" corresp="#s8:l1">vresen</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Met hert, sin en <rhyme label="b" type="m" corresp="#s8:l2">ghemoet</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">De Heere seyt // <rhyme label="c" type="m">Ghehoorsaemheyt</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Hem voor Offer <rhyme label="d" type="m">behaeght</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Bewijst u doch in <rhyme label="a" type="f" corresp="#s8:l1">desen</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Elck als een wijse <rhyme label="d" type="m" corresp="#s8:l6">Maeght</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Dat uwe Lampen <rhyme label="a" type="f">branden</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Met veel deughden <rhyme label="b" type="m">verciert</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Neemt het Licht in uw <rhyme label="a" type="f" corresp="#s9:l1">handen</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Dat Gods Naem word’ <rhyme label="b" type="m" corresp="#s9:l2">ghe-eert</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Het Bruylofs-kleyt // Maeckt oock <rhyme label="c" type="m">bereyt</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Wilt ghy zijn <rhyme label="d" type="m">onbeschaemt</rhyme></l>
        <l id="s9:l7" met="3" type="-+">Als d’ander gaen tot <rhyme label="a" type="f" corresp="#s9:l1">schanden</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Gods Kinders zijn <rhyme label="d" type="m" corresp="#s9:l6">ghenaemt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Uyt liefden nu ten <rhyme label="a" type="f">lesten</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Soo groet ick u hier <rhyme label="b" type="m">me</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">En wensche u het <rhyme label="a" type="f" corresp="#s10:l1">besten</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Van onbsen Godt den <rhyme label="b" type="m" corresp="#s10:l2">vre</rhyme>:</l>
        <l id="s10:l5" met="4" type="-+">Oock sijn ghenae // Vroech ende <rhyme label="c" type="m">spae</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">En beveel u den <rhyme label="d" type="m">Heer</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Hier meede tot <rhyme label="a" type="f" corresp="#s10:l1">befesten</rhyme></l>
        <l id="s10:l8" met="3" type="-+">Neemt dit doch voor een <rhyme label="d" type="m" corresp="#s10:l6">Leer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <author>Willem Sluiter</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Gy die op de <rhyme label="a" type="m">Bruilofts-feest</rhyme></l>
        <l id="s1:l2" met="2" type="+-">Zijt <rhyme label="a" type="m" corresp="#s1:l1">geweest</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Die te Cana wierd <rhyme label="b" type="f">gehouden</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Iesus, kom, op onse <rhyme label="c" type="m">bee</rhyme>,</l>
        <l id="s1:l5" met="2" type="+-">Selfs ook <rhyme label="c" type="m" corresp="#s1:l4">mee</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Op dit feest der <rhyme label="b" type="f" corresp="#s1:l3">nieuw-getrouwden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Want deBruidegom en <rhyme label="a" type="m">Bruit</rhyme></l>
        <l id="s2:l2" met="2" type="+-">Sagen <rhyme label="a" type="m" corresp="#s2:l1">uit</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Elk om 't seerst, om u te <rhyme label="b" type="f">nooden</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Eer noch iemant van haar <rhyme label="c" type="m">bloet</rhyme></l>
        <l id="s2:l5" met="2" type="+-">Was <rhyme label="c" type="m" corresp="#s2:l4">begroet</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Of op dese feest <rhyme label="b" type="f" corresp="#s2:l3">ontboden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">'t Is om u al meest <rhyme label="a" type="m">gedaan</rhyme>.</l>
        <l id="s3:l2" met="2" type="+-">Sit <rhyme label="a" type="m" corresp="#s3:l1">voor-aan</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Om hier alles te <rhyme label="b" type="f">gebieden</rhyme>.</l>
        <l id="s3:l4" met="4" type="-+">Al wat gy beveelt of <rhyme label="c" type="m">segt</rhyme></l>
        <l id="s3:l5" met="2" type="+-">Is doch <rhyme label="c" type="m" corresp="#s3:l4">recht</rhyme>:</l>
        <l id="s3:l6" met="4" type="-+">'t Sal en moet dan ook <rhyme label="b" type="f" corresp="#s3:l3">geschieden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ach! wat waar al onse <rhyme label="a" type="m">vreugt</rhyme></l>
        <l id="s4:l2" met="2" type="+-">En <rhyme label="a" type="m" corresp="#s4:l1">geneugt</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Soo wy uw geselschap <rhyme label="b" type="f">misten</rhyme>?</l>
        <l id="s4:l4" met="4" type="-+">Vreugde sonder u is <rhyme label="c" type="m">niet</rhyme></l>
        <l id="s4:l5" met="2" type="+-">Dan <rhyme label="c" type="m" corresp="#s4:l4">verdriet</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Voor een ongeveinsde <rhyme label="b" type="f" corresp="#s4:l3">Christen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ia, daar gy niet zijt te <rhyme label="a" type="m">gast</rhyme>,</l>
        <l id="s5:l2" met="2" type="+-">Daar en <rhyme label="a" type="m" corresp="#s5:l1">past</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Vreugt of wellust t'geenen <rhyme label="b" type="f">tijden</rhyme>.</l>
        <l id="s5:l4" met="4" type="-+">Beter waar 't in druk en <rhyme label="c" type="m">pijn</rhyme></l>
        <l id="s5:l5" met="2" type="+-">Steeds te <rhyme label="c" type="m" corresp="#s5:l4">zijn</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Dan sich sonder u <rhyme label="b" type="f" corresp="#s5:l3">verblijden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">In, en met u, Heer, zijn <rhyme label="a" type="m">wy</rhyme></l>
        <l id="s6:l2" met="2" type="+-">Nu soo <rhyme label="a" type="m" corresp="#s6:l1">bly</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">U sal hert en tonge <rhyme label="b" type="f">smeken</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Dat noit iet dit lieve <rhyme label="c" type="m">paar</rhyme>,</l>
        <l id="s6:l5" met="2" type="+-">Voor of <rhyme label="c" type="m" corresp="#s6:l4">naar</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Mag aan ziel of lijf <rhyme label="b" type="f" corresp="#s6:l3">ontbreken</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">O gy Bruid'gom uwer <rhyme label="a" type="m">Kerk</rhyme>,</l>
        <l id="s7:l2" met="2" type="+-">'t Is uw <rhyme label="a" type="m" corresp="#s7:l1">werk</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Dat dees' twee zijn <rhyme label="b" type="f">t'saam-gebonden</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Met den bandt van d'echte <rhyme label="c" type="m">staat</rhyme>;</l>
        <l id="s7:l5" met="2" type="+-">Daarom <rhyme label="c" type="m" corresp="#s7:l4">laat</rhyme></l>
        <l id="s7:l6" met="4" type="-+">Ook uw hulp haar zijn <rhyme label="b" type="f" corresp="#s7:l3">gesonden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Ia het Houwlik van dit <rhyme label="a" type="m">paar</rhyme></l>
        <l id="s8:l2" met="2" type="+-">Was al <rhyme label="a" type="m" corresp="#s8:l1">klaar</rhyme></l>
        <l id="s8:l3" met="4" type="-+">In uw raat, eer hier op <rhyme label="b" type="f">aarden</rhyme>;</l>
        <l id="s8:l4" met="4" type="-+">Trek'er uwen zegen <rhyme label="c" type="m">dan</rhyme></l>
        <l id="s8:l5" met="2" type="+-">Nu niet <rhyme label="c" type="m" corresp="#s8:l4">van</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Na dat s' in uw name <rhyme label="b" type="f" corresp="#s8:l3">paarden</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Soo haar eenig <rhyme label="a" type="m">ongeluk</rhyme>,</l>
        <l id="s9:l2" met="2" type="+-">Kruis of <rhyme label="a" type="m" corresp="#s9:l1">druk</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Mogt in desen staat <rhyme label="b" type="f">genaken</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Soo wilt gy haar Trooster <rhyme label="c" type="m">zijn</rhyme></l>
        <l id="s9:l5" met="2" type="+-">In haar <rhyme label="c" type="m" corresp="#s9:l4">pijn</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">En een salig' uitkomst <rhyme label="b" type="f" corresp="#s9:l3">maken</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Gy gaaft eens een schoone <rhyme label="a" type="m">proef</rhyme>,</l>
        <l id="s10:l2" met="2" type="+-">Hoe 't <rhyme label="a" type="m" corresp="#s10:l1">behoef</rhyme></l>
        <l id="s10:l3" met="4" type="-+">En de noot der <rhyme label="b" type="f">nieuw-getrouwde</rhyme></l>
        <l id="s10:l4" met="4" type="-+">U ter herten gaat, <rhyme label="c" type="m">wanneer</rhyme></l>
        <l id="s10:l5" met="2" type="+-">U soo <rhyme label="c" type="m" corresp="#s10:l4">seer</rhyme></l>
        <l id="s10:l6" met="4" type="-+">Haar verlegenheit <rhyme label="b" type="f" corresp="#s10:l3">berouwde</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Dat gy, alsser wijn <rhyme label="a" type="m">ontbrak</rhyme>,</l>
        <l id="s11:l2" met="2" type="+-">Haar so <rhyme label="a" type="m" corresp="#s11:l1">strak</rhyme></l>
        <l id="s11:l3" met="4" type="-+">'t Water deedt in wijn <rhyme label="b" type="f">verkeren</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Tot bewijs, dat gy soo <rhyme label="c" type="m">mildt</rhyme></l>
        <l id="s11:l5" met="2" type="+-">Zeg'nen <rhyme label="c" type="m" corresp="#s11:l4">wilt</rhyme></l>
        <l id="s11:l6" met="4" type="-+">All die oit uw hulp <rhyme label="b" type="f" corresp="#s11:l3">begeren</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Gy, die water maakt tot <rhyme label="a" type="m">wijn</rhyme>,</l>
        <l id="s12:l2" met="2" type="+-">Kondt ook <rhyme label="a" type="m" corresp="#s12:l1">pijn</rhyme></l>
        <l id="s12:l3" met="4" type="-+">Haast tot enkel blijdschap <rhyme label="b" type="f">maken</rhyme>.</l>
        <l id="s12:l4" met="4" type="-+">Uwe liefd' en gunst, O <rhyme label="c" type="m">heer</rhyme>,</l>
        <l id="s12:l5" met="2" type="+-">Kan ons <rhyme label="c" type="m" corresp="#s12:l4">meer</rhyme>,</l>
        <l id="s12:l6" met="4" type="-+">Dan de beste wijn, <rhyme label="b" type="f" corresp="#s12:l3">vermaken</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Kom, met uw genaad' en <rhyme label="a" type="m">Geest</rhyme>,</l>
        <l id="s13:l2" met="2" type="+-">Hier ter <rhyme label="a" type="m" corresp="#s13:l1">Feest</rhyme>;</l>
        <l id="s13:l3" met="4" type="-+">Want soo gy wilt van ons <rhyme label="b" type="f">wijken</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">O gy hemelsch <rhyme label="c" type="m">Bruidegom</rhyme>,</l>
        <l id="s13:l5" met="2" type="+-">Moet <rhyme label="c" type="m" corresp="#s13:l4">daarom</rhyme></l>
        <l id="s13:l6" met="4" type="-+">Onse vreugt' geheel <rhyme label="b" type="f" corresp="#s13:l3">beswijken</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Als gy Bruid'gom by ons <rhyme label="a" type="m">zijt</rhyme>,</l>
        <l id="s14:l2" met="2" type="+-">Zijn <rhyme label="a" type="m" corresp="#s14:l1">verblijdt</rhyme></l>
        <l id="s14:l3" met="4" type="-+">All' uw lieve <rhyme label="b" type="f">Bruilofts-kind'ren</rhyme>;</l>
        <l id="s14:l4" met="4" type="-+">Maar als gy eens van haar <rhyme label="c" type="m">gaat</rhyme>,</l>
        <l id="s14:l5" met="2" type="+-">'t Minste <rhyme label="c" type="m" corresp="#s14:l4">quaat</rhyme></l>
        <l id="s14:l6" met="4" type="-+">Kan haar blijdschap haast <rhyme label="b" type="f" corresp="#s14:l3">vermind'ren</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Zijt niet als een <rhyme label="a" type="m">vreemdeling</rhyme>,</l>
        <l id="s15:l2" met="2" type="+-">Die weer <rhyme label="a" type="m" corresp="#s15:l1">ging</rhyme></l>
        <l id="s15:l3" met="4" type="-+">Als hy even was <rhyme label="b" type="f">gekomen</rhyme>.</l>
        <l id="s15:l4" met="4" type="-+">Woon ons nu en eeuwig <rhyme label="c" type="m">by</rhyme>,</l>
        <l id="s15:l5" met="2" type="+-">Tot dat <rhyme label="c" type="m" corresp="#s15:l4">wy</rhyme></l>
        <l id="s15:l6" met="4" type="-+">Tot u werden <rhyme label="b" type="f" corresp="#s15:l3">opgenomen</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Heer, wy zijn in u <rhyme label="a" type="m">verheugt</rhyme>:</l>
        <l id="s16:l2" met="2" type="+-">Laat de <rhyme label="a" type="m" corresp="#s16:l1">vreugt</rhyme></l>
        <l id="s16:l3" met="4" type="-+">Doch ons allen wel <rhyme label="b" type="f">gelingen</rhyme>,</l>
        <l id="s16:l4" met="4" type="-+">En dit soet paar <rhyme label="c" type="m">voor-al</rhyme>,</l>
        <l id="s16:l5" met="2" type="+-">'t Welk u <rhyme label="c" type="m" corresp="#s16:l4">sal</rhyme></l>
        <l id="s16:l6" met="4" type="-+">Allermeest daar lof voor <rhyme label="b" type="f" corresp="#s16:l3">singen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

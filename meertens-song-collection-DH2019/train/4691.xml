    <tags/>
    <melody>Gelijk als de witte zwaan</melody>
  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">HOe’n zou ’t Echt der Echte <rhyme label="a" type="f">luyden</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Geen genaed en <rhyme label="b" type="m">heyligheyd</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Aen hen geven, noch <rhyme label="a" type="f" corresp="#s1:l1">beduyden</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Na dien <rhyme label="b" type="m" corresp="#s1:l2">d’onverbind’lijkheyd</rhyme></l>
        <l id="s1:l5" met="4" type="+-">Niet dan op een heylig <rhyme label="c" type="f">teiken</rhyme></l>
        <l id="s1:l6" met="2" type="-+">Van ’t Echt en <rhyme label="d" type="m">past</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">En den Heer ge-na moet <rhyme label="c" type="f" corresp="#s1:l5">reyken</rhyme></l>
        <l id="s1:l8" met="2" type="-+">Tot zulken <rhyme label="d" type="m" corresp="#s1:l6">last</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Of zegt my ter goeder <rhyme label="a" type="f">trouwen</rhyme>:</l>
        <l id="s2:l2" met="4" type="+-">Waerom dat den Christen <rhyme label="b" type="m">man</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Een onvruchtbaer wijff moet <rhyme label="a" type="f" corresp="#s2:l1">houwen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Noch om ziekt verlaten <rhyme label="b" type="m" corresp="#s2:l2">kan</rhyme>?</l>
        <l id="s2:l5" met="4" type="+-">Daer nochtans een Iood, of <rhyme label="c" type="f">Heyden</rhyme></l>
        <l id="s2:l6" met="2" type="-+">Van d’Echte <rhyme label="d" type="m">vrou</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">En de deze ook wel <rhyme label="c" type="f" corresp="#s2:l5">scheiden</rhyme></l>
        <l id="s2:l8" met="2" type="-+">Mag, vande <rhyme label="d" type="m" corresp="#s2:l6">trou</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Wat ghy hier ook poogt te <rhyme label="a" type="f">zeggen</rhyme>;</l>
        <l id="s3:l2" met="4" type="+-">’t Is al zonder <rhyme label="b" type="m">fondament</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Komt ghy d’oorzaek niet te <rhyme label="a" type="f" corresp="#s3:l1">leggen</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Met ons, op het <rhyme label="b" type="m" corresp="#s3:l2">Sacrament</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Dits de rede. zoukt geen <rhyme label="c" type="f">ander</rhyme>:</l>
        <l id="s3:l6" met="2" type="-+">Dat Christus <rhyme label="d" type="m">band</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Totter dood toe, by <rhyme label="c" type="f" corresp="#s3:l5">malkander</rhyme></l>
        <l id="s3:l8" met="2" type="-+">Houd d’Echte <rhyme label="d" type="m" corresp="#s3:l6">stand</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Zoo dat geenderhande <rhyme label="a" type="f">zuchten</rhyme></l>
        <l id="s4:l2" met="4" type="+-">’t Sy van pest, of <rhyme label="b" type="m">Lazery</rhyme>;</l>
        <l id="s4:l3" met="4" type="+-">’t Sy van wangehoopte <rhyme label="a" type="f" corresp="#s4:l1">vruchten</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Man of vrou kan maken <rhyme label="b" type="m" corresp="#s4:l2">vry</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">Iae daer is geen magt te <rhyme label="c" type="f">vinden</rhyme></l>
        <l id="s4:l6" met="2" type="-+">In daed, of <rhyme label="d" type="m">hoop</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Die op d’aerde kan <rhyme label="c" type="f" corresp="#s4:l5">ontbinden</rhyme></l>
        <l id="s4:l8" met="2" type="-+">Een zulken <rhyme label="d" type="m" corresp="#s4:l6">knoop</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Gelijk elk dan wel <rhyme label="a" type="f">beraden</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Zich hier toe vervougen <rhyme label="b" type="m">moet</rhyme>;</l>
        <l id="s5:l3" met="4" type="+-">Zoo ist ook dat Goods <rhyme label="a" type="f" corresp="#s5:l1">genade</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Dit zwaer-wigtig juk <rhyme label="b" type="m" corresp="#s5:l2">verzoet</rhyme></l>
        <l id="s5:l5" met="4" type="+-">Door een al te milde <rhyme label="c" type="f">zegen</rhyme></l>
        <l id="s5:l6" met="2" type="-+">Zijns <rhyme label="d" type="m">Sacraments</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Daer hy’t duldelijk me’e <rhyme label="c" type="f" corresp="#s5:l5">dregen</rhyme></l>
        <l id="s5:l8" met="2" type="-+">Doedt, vanden <rhyme label="d" type="m" corresp="#s5:l6">mensch</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Die dan deze gunst <rhyme label="a" type="f">verstoten</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Van den huwelijksen <rhyme label="b" type="m">band</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Doen niet dan z’het Echt <rhyme label="a" type="f" corresp="#s6:l1">ontbloten</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Van haer nodige <rhyme label="b" type="m" corresp="#s6:l2">bystand</rhyme>.</l>
        <l id="s6:l5" met="4" type="+-">Zoo dat Luther wel dorst <rhyme label="c" type="f">schrijven</rhyme></l>
        <l id="s6:l6" met="2" type="-+">Met klaer <rhyme label="d" type="m">bescheyd</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">Wil de vrou u niet <rhyme label="c" type="f" corresp="#s6:l5">gerijven</rhyme></l>
        <l id="s6:l8" met="2" type="-+">Zo roupt de <rhyme label="d" type="m" corresp="#s6:l6">meyt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Ach! d’onzaligste der <rhyme label="a" type="f">menschen</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Zonder hulp van ’t <rhyme label="b" type="m">Sacrament</rhyme>;</l>
        <l id="s7:l3" met="4" type="+-">Was geen meester van zijn <rhyme label="a" type="f" corresp="#s7:l1">pensen</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">En van ’t geen daer is <rhyme label="b" type="m" corresp="#s7:l2">omtrent</rhyme>.</l>
        <l id="s7:l5" met="4" type="+-">Want hoe’t vleesch meer werd <rhyme label="c" type="f">genoten</rhyme>.</l>
        <l id="s7:l6" met="2" type="-+">Meer werd <rhyme label="d" type="m">begeerd</rhyme>.</l>
        <l id="s7:l7" met="4" type="+-">Recht als smout in’t vier <rhyme label="c" type="f" corresp="#s7:l5">gegoten</rhyme>,</l>
        <l id="s7:l8" met="2" type="-+">De vlam <rhyme label="d" type="m" corresp="#s7:l6">vermeerdt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">’t Is de gracy ons liefs <rhyme label="a" type="f">Heeren</rhyme></l>
        <l id="s8:l2" met="4" type="+-">(Dank moet hebben ’t hoogste <rhyme label="b" type="m">goed</rhyme>)</l>
        <l id="s8:l3" met="4" type="+-">Die de vlammen af doed <rhyme label="a" type="f" corresp="#s8:l1">weren</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Die het zuir vermengt met <rhyme label="b" type="m" corresp="#s8:l2">zoet</rhyme>.</l>
        <l id="s8:l5" met="4" type="+-">Die de kind’ren op doet <rhyme label="c" type="f">voeden</rhyme></l>
        <l id="s8:l6" met="2" type="-+">In eer en <rhyme label="d" type="m">deugd</rhyme>;</l>
        <l id="s8:l7" met="4" type="+-">Die de lasten zal <rhyme label="c" type="f" corresp="#s8:l5">vergoeden</rhyme></l>
        <l id="s8:l8" met="2" type="-+">Met Hemels <rhyme label="d" type="m" corresp="#s8:l6">vreugd</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

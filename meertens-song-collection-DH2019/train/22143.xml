  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">EN wilt ghy niet eens spreken <rhyme label="a" type="m">noch</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Wat waer is, en doen <rhyme label="b" type="f">rechte</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Noch oock eens recht ordeelen <rhyme label="a" type="m" corresp="#s1:l1">doch</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Ghy menschen kinden: al <rhyme label="b" type="f" corresp="#s1:l2">slechte</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">Puer wetens en willens doet ghy <rhyme label="c" type="m">quaet</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Met uwen handen, en sherten <rhyme label="c" type="m" corresp="#s1:l5">raet</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Glijck den Godloosen aert <rhyme label="d" type="f">doet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">De Godloosen die zijn vervreemt <rhyme label="a" type="m">al</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Alse van haer Moeder worden <rhyme label="b" type="f">ontfanghen</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">De loegnaers, die dolen diesglijcx <rhyme label="a" type="m" corresp="#s2:l1">al</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En sy wrueten ghelijck de <rhyme label="b" type="f" corresp="#s2:l2">Slanghen</rhyme>:</l>
        <l id="s2:l5" met="4" type="-+">Glijck den Naeter toestopt haer <rhyme label="c" type="m">oor</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Die sToouenaers stem gheeft gheen <rhyme label="c" type="m" corresp="#s2:l5">ghehoor</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Die haer can wel <rhyme label="d" type="f">besweren</rhyme>:</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">In hun muyl hun tanden breeckt <rhyme label="a" type="m">snel</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Heer breeckt die groote <rhyme label="b" type="f">baecktanden</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Oock vanden ionghen Leeuwen <rhyme label="a" type="m" corresp="#s3:l1">fel</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Soo sullense vergaen met <rhyme label="b" type="f" corresp="#s3:l2">schanden</rhyme>:</l>
        <l id="s3:l5" met="4" type="-+">Glijck dwater dat seer snel wech <rhyme label="c" type="m">vloeyt</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Met zijn pijlen hy hem haestlijck <rhyme label="c" type="m" corresp="#s3:l5">spoeyt</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Maer hy sal grootelijck <rhyme label="d" type="f">missen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Sy vergaen glijck een Sleck die <rhyme label="a" type="m">versmacht</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Glijck een kindt dat is <rhyme label="b" type="f">misuallen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Dat de Sonne niet en siet: en <rhyme label="a" type="m" corresp="#s4:l1">gheacht</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Alsoo worden sy oock <rhyme label="b" type="f" corresp="#s4:l2">alle</rhyme>:</l>
        <l id="s4:l5" met="4" type="-+">En eermen hun Doornen merckt aenden <rhyme label="c" type="m">Struyck</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">So salse de gramscap vernielen <rhyme label="c" type="m" corresp="#s4:l5">alglijck</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Dwyl datse zijn vers, en <rhyme label="d" type="f">ionghe</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">De rechtuaerdghe hem verblijden <rhyme label="a" type="m">sal</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Als hy de wrake sal <rhyme label="b" type="f">aensien</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">En zijne voeten oock wasschen <rhyme label="a" type="m" corresp="#s5:l1">al</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">In dbloet vanden Godloosen <rhyme label="b" type="f" corresp="#s5:l2">lien</rhyme>:</l>
        <l id="s5:l5" met="4" type="-+">Den vromen moet op deser <rhyme label="c" type="m">aerden</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Sijn leedt seer wel vergolden <rhyme label="c" type="m" corresp="#s5:l5">werden</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Want Godt die ordeelt de <rhyme label="d" type="f">wereldt</rhyme>.</l>
      </lg>
    </lg>

  <author>Johan Deknatel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ODoorbreker aller <rhyme label="a" type="f">banden</rhyme>!</l>
        <l id="s1:l2" met="4" type="-+">Gy die altyd by ons <rhyme label="b" type="m">zyt</rhyme>;</l>
        <l id="s1:l3" met="4" type="-+">By den arbeid, spot en <rhyme label="a" type="f" corresp="#s1:l1">schande</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Maakt uw troost het hart <rhyme label="b" type="m" corresp="#s1:l2">verblydt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Oeffen verder uw' <rhyme label="a" type="f">Gerichten</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Tegens onzen Adams <rhyme label="b" type="m">aart</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Tot de Geest, van haar <rhyme label="a" type="f" corresp="#s2:l1">gewichten</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Los gemaakt, styg' <rhyme label="b" type="m" corresp="#s2:l2">hemelwaart</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Is het dog de wil des <rhyme label="a" type="f">Vaders</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Dat g' uw werk voleindt met <rhyme label="b" type="m">magt</rhyme>?</l>
        <l id="s3:l3" met="4" type="-+">Is 'er in uw' volheits <rhyme label="a" type="f" corresp="#s3:l1">aders</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Hiertoe wysheyt, liefd' en <rhyme label="b" type="m" corresp="#s3:l2">kragt</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Op dat niemand gae <rhyme label="a" type="f">verloren</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Van die U gegeven <rhyme label="b" type="m">zyn</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Maar dat Gy hen van den <rhyme label="a" type="f" corresp="#s4:l1">tooren</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Redt, en brengt ter Ruststand <rhyme label="b" type="m" corresp="#s4:l2">in</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">O zo moet Gy ons <rhyme label="a" type="f">volmaken</rhyme>!</l>
        <l id="s5:l2" met="4" type="-+">Wilt en kont Gy anders, <rhyme label="b" type="m">Heer'</rhyme>?</l>
        <l id="s5:l3" met="4" type="-+">Is ons Leeven niet Uw <rhyme label="a" type="f" corresp="#s5:l1">zaake</rhyme>?</l>
        <l id="s5:l4" met="4" type="-+">Ziet uw oog niet op ons <rhyme label="b" type="m" corresp="#s5:l2">neer</rhyme>?</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Schoon wy als versmaad'de <rhyme label="a" type="f">Leeden</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">By de menschen zyn <rhyme label="b" type="m">geacht</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Wyl door 's kruisses <rhyme label="a" type="f" corresp="#s6:l1">ned'righeden</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Wy der weereld zyn <rhyme label="b" type="m" corresp="#s6:l2">geslacht'</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Zie dan neer op onze <rhyme label="a" type="f">banden</rhyme>.</l>
        <l id="s7:l2" met="4" type="-+">Ziet uw Schepsel roept en <rhyme label="b" type="m">schreit</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Smeekt U met gewrongen <rhyme label="a" type="f" corresp="#s7:l1">handen</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Maak het los van <rhyme label="b" type="m" corresp="#s7:l2">d'ydelheit</rhyme>,</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Van de dienstbaarheit der <rhyme label="a" type="f">zonden</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Van het vleesch, dat haar zo <rhyme label="b" type="m">drukt</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Daar het alle dag en <rhyme label="a" type="f" corresp="#s8:l1">stonden</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Zuchtend, onder gaat <rhyme label="b" type="m" corresp="#s8:l2">gebukt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Geef ons krachten, hoor ons <rhyme label="a" type="f">smeeken</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Help ons, Heer', hier is de <rhyme label="b" type="m">hand</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Help door alles heen te <rhyme label="a" type="f" corresp="#s9:l1">breeken</rhyme></l>
        <l id="s9:l4" met="4" type="-+">In de vrye <rhyme label="b" type="m" corresp="#s9:l2">Kinderstand</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Menschen-vrees en blo√¥ <rhyme label="a" type="f">vertzagen</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Weg met uw vernufts <rhyme label="b" type="m">beleid</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Weg met vrees voor smaad of <rhyme label="a" type="f" corresp="#s10:l1">plagen</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Weg met 's vleesches <rhyme label="b" type="m" corresp="#s10:l2">tederheit</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Heer verbreek, vergruis als <rhyme label="a" type="f">aarde</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">'t Hart, verhardt door boosheit <rhyme label="b" type="m">groot</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Wat is U de Mensch van <rhyme label="a" type="f" corresp="#s11:l1">waarde</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Als hy leeft in zonden <rhyme label="b" type="m" corresp="#s11:l2">dood</rhyme>!</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Hef ons uit het stof der <rhyme label="a" type="f">zonden</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Werp het Slangen-broedsel <rhyme label="b" type="m">uit</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Maak ons vry, die gaan <rhyme label="a" type="f" corresp="#s12:l1">gebonden</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Als uw' onbevlekte <rhyme label="b" type="m" corresp="#s12:l2">Bruid</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Rust die vleesch en bloed <rhyme label="a" type="f">bevoordeelt</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Blyv' ons eeuwiglyk <rhyme label="b" type="m">ontwent</rhyme>;</l>
        <l id="s13:l3" met="4" type="-+">Geef ons, 't geen Gy nodig <rhyme label="a" type="f" corresp="#s13:l1">oordeelt</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Voor ons korte <rhyme label="b" type="m" corresp="#s13:l2">leevens-end</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Wy gelooven, ja wy <rhyme label="a" type="f">binden</rhyme></l>
        <l id="s14:l2" met="4" type="-+">Ons aan U, en houden <rhyme label="b" type="m">vast</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Tot wy de verlossing <rhyme label="a" type="f" corresp="#s14:l1">vinden</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">Van de zond' en 's vleesches <rhyme label="b" type="m" corresp="#s14:l2">last</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Heerscher heersch, en geef de <rhyme label="a" type="f">Zeege</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">Koning voer uw <rhyme label="b" type="m">regiment</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">Slae den vyand <rhyme label="a" type="f" corresp="#s15:l1">allerwegen</rhyme>,</l>
        <l id="s15:l4" met="4" type="-+">Maak der slaverny een <rhyme label="b" type="m" corresp="#s15:l2">end</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Laat de zielen uit hun <rhyme label="a" type="f">kuilen</rhyme>,</l>
        <l id="s16:l2" met="4" type="-+">Om uw dierbaar <rhyme label="b" type="m">offerbloed</rhyme>,</l>
        <l id="s16:l3" met="4" type="-+">Dat wy ons niet meer <rhyme label="a" type="f" corresp="#s16:l1">verschuilen</rhyme>,</l>
        <l id="s16:l4" met="4" type="-+">Want Gy meent het met ons <rhyme label="b" type="m" corresp="#s16:l2">goed</rhyme></l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Ach! de last dryft ons tot <rhyme label="a" type="f">schreijen</rhyme>,</l>
        <l id="s17:l2" met="4" type="-+">Alle roepen wy tot <rhyme label="b" type="m">U</rhyme>:</l>
        <l id="s17:l3" met="4" type="-+">Wilt ons, Heer', dog eens <rhyme label="a" type="f" corresp="#s17:l1">bevryer</rhyme></l>
        <l id="s17:l4" met="4" type="-+">Vang maar aan, maar kom dog <rhyme label="b" type="m" corresp="#s17:l2">nu</rhyme></l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">O hoe dier zyn wy <rhyme label="a" type="f">verworven</rhyme>!</l>
        <l id="s18:l2" met="4" type="-+">Om geen weerelds roof te <rhyme label="b" type="m">zyn</rhyme>,</l>
        <l id="s18:l3" met="4" type="-+">Jesus! zyt gy dan <rhyme label="a" type="f" corresp="#s18:l1">gestorven</rhyme>?</l>
        <l id="s18:l4" met="4" type="-+">Moet Gy ons ook maken <rhyme label="b" type="m" corresp="#s18:l2">rein</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">Rein en vry en gansch <rhyme label="a" type="f">volkomen</rhyme>,</l>
        <l id="s19:l2" met="4" type="-+">Dat wy zweemen naar uw <rhyme label="b" type="m">beeld</rhyme>,</l>
        <l id="s19:l3" met="4" type="-+">Dan zal uw genaade <rhyme label="a" type="f" corresp="#s19:l1">stroomen</rhyme>,</l>
        <l id="s19:l4" met="4" type="-+">Als wy zyn uit U <rhyme label="b" type="m" corresp="#s19:l2">geteelt</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">Liefde! trek ons in uw <rhyme label="a" type="f">sterven</rhyme>,</l>
        <l id="s20:l2" met="4" type="-+">Laat met U gekruissigt <rhyme label="b" type="m">zyn</rhyme></l>
        <l id="s20:l3" met="4" type="-+">Al wat niet uw Ryk kan <rhyme label="a" type="f" corresp="#s20:l1">erven</rhyme>,</l>
        <l id="s20:l4" met="4" type="-+">Voer in 't Paradys ons <rhyme label="b" type="m" corresp="#s20:l2">in</rhyme>.</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="4" type="-+">Dog Gy zult, gy zult wel <rhyme label="a" type="f">komen</rhyme>,</l>
        <l id="s21:l2" met="4" type="-+">Kleeft Ons maar geen traagheit <rhyme label="b" type="m">aan</rhyme>.</l>
        <l id="s21:l3" met="4" type="-+">'t Zal ons zyn, als waaren 't <rhyme label="a" type="f" corresp="#s21:l1">droomen</rhyme>,</l>
        <l id="s21:l4" met="4" type="-+">Als wy in uw' Vryheit <rhyme label="b" type="m" corresp="#s21:l2">staan</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <author>C. J. Wits</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">MEt grooten vreucht wil ick nu <rhyme label="a" type="f">singhen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">En prijsen u, mijn Godt en <rhyme label="b" type="m">Heer</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Vermidts ick voel <rhyme label="a" type="f" corresp="#s1:l1">veranderinghen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Een nieuwe lust al tot u <rhyme label="b" type="m" corresp="#s1:l2">Leer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ick heb ghevoelt u Vaders <rhyme label="a" type="f">slaghen</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Van uwen handt, tot mijnder <rhyme label="b" type="m">baet</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Dit was, o ! Godt, u <rhyme label="a" type="f" corresp="#s2:l1">wel-behaghen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Hier door te toonen u <rhyme label="b" type="m" corresp="#s2:l2">genaedt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">De vloeck des Wets, de straf der <rhyme label="a" type="f">sonden</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Beswaerde eerst mijn droef <rhyme label="b" type="m">ghemoedt</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Doch ick heb nu we'er troost <rhyme label="a" type="f" corresp="#s3:l1">ghevonden</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Door u verdienst, en dierbaer <rhyme label="b" type="m" corresp="#s3:l2">bloedt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Maeckt vruchtbaer, Heer, mijn kleyn <rhyme label="a" type="f">geloove</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Sterckt my in allen <rhyme label="b" type="m">tegen-spoedt</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Op dat den Sathan niet <rhyme label="a" type="f" corresp="#s4:l1">beroove</rhyme></l>
        <l id="s4:l4" met="4" type="-+">De ware Rust van mijn <rhyme label="b" type="m" corresp="#s4:l2">ghemoedt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Vernieuwt, o ! God, mijn oude <rhyme label="a" type="f">sinnen</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Sterckt my, u nieu-herbooren <rhyme label="b" type="m">Kindt</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Ick voel nu nieuwe vreucht van <rhyme label="a" type="f" corresp="#s5:l1">binnen</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Een teecken dat ghy my <rhyme label="b" type="m" corresp="#s5:l2">bemint</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Mijn droeven Ziel is nu <rhyme label="a" type="f">ghenesen</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Door u verdienst met u <rhyme label="b" type="m">ver-eent</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Vermidts ick, Heer, voortaen sal <rhyme label="a" type="f" corresp="#s6:l1">wesen</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Een ware Lidt van u <rhyme label="b" type="m" corresp="#s6:l2">Gemeent'</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Sterckt nu, o ! Godt, u Spruytjen <rhyme label="a" type="f">teder</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Nu eerst gheplant in Syons <rhyme label="b" type="m">Hof</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Op dat gheen vorst, noch stuer <rhyme label="a" type="f" corresp="#s7:l1">onweder</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Verbolghen stroopt mijn bloeysel <rhyme label="b" type="m" corresp="#s7:l2">of</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Op dat ick, Heer, mach eeuwigh <rhyme label="a" type="f">blijven</rhyme></l>
        <l id="s8:l2" met="4" type="-+">U waerden Knecht, en Ghy, mijn <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Wilt door u Geest my vorder <rhyme label="a" type="f" corresp="#s8:l1">stijven</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">En stercken door u reyne <rhyme label="b" type="m" corresp="#s8:l2">Leer</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Nu sal ick aen u Tafel <rhyme label="a" type="f">treden</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Als uwen Vriendt en <rhyme label="b" type="m">Dis-genoodt</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Die voor my Sondaer hebt <rhyme label="a" type="f" corresp="#s9:l1">gheleden</rhyme>.</l>
        <l id="s9:l4" met="4" type="-+">Tot troost bedencken uwen <rhyme label="b" type="m" corresp="#s9:l2">Doodt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">'t Geen dat ghy in my hebt <rhyme label="a" type="f">begonnen</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Och ! zeghent dat nu meer, en <rhyme label="b" type="m">meer</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Ghy hebt my door u doodt <rhyme label="a" type="f" corresp="#s10:l1">ghewonnen</rhyme>.</l>
        <l id="s10:l4" met="4" type="-+">Lof ! lof ! zy u, mijn Godt, mijn <rhyme label="b" type="m" corresp="#s10:l2">Heer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

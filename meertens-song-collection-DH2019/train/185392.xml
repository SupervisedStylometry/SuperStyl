      <year-start>1631</year-start>
      <year-end>1631</year-end>
    </date>
    <location>
      <orginal-name>de rijp</orginal-name>
      <standard-name>De Rijp, The Netherlands</standard-name>
      <coordinates>
        <lon>52.5548999</lon>
        <lat>4.8440884</lat>
      </coordinates>
    </location>
    <tags/>
    <melody>Haast u mijn schone vriendin</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Haest u mijn schoon <rhyme label="a" type="f">vriendinne</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Rijst uyt den slaep der sonden <rhyme label="b" type="m">swaer</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Comt te landewaerts <rhyme label="a" type="f" corresp="#s1:l1">inne</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Aensiet de vrucht des Meys <rhyme label="b" type="m" corresp="#s1:l2">aldaer</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Elck dierken soeckt zijn <rhyme label="b" type="m" corresp="#s1:l2">wederpaer</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Die bloemkens lustich <rhyme label="c" type="f">spruyten</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">‘t Verheucht hem al verr’ ende <rhyme label="b" type="m" corresp="#s1:l2">naer</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Lief light ghy nu in <rhyme label="c" type="f" corresp="#s1:l6">muyten</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ick ligh vol van <rhyme label="a" type="f">ghebreken</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Eylacen! Lief totter doot <rhyme label="b" type="m">ghewont</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Van rouwe mijn ooghen <rhyme label="a" type="f" corresp="#s2:l1">leken</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Van sonden ben ick <rhyme label="b" type="m" corresp="#s2:l2">onghesont</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Noyt mensche so mismaeckt en <rhyme label="b" type="m" corresp="#s2:l2">stont</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Wat deed’ ick oyt <rhyme label="c" type="f">gheboren</rhyme>?</l>
        <l id="s2:l7" met="4" type="-+">De doot wert my voor ‘t leven <rhyme label="b" type="m" corresp="#s2:l2">gejont</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Het gaet met my al <rhyme label="c" type="f" corresp="#s2:l6">verloren</rhyme>,</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ick ben die Mey <rhyme label="a" type="f">verheven</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Die op Calvarien was <rhyme label="b" type="m">gheplant</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Voor u liet ick mijn <rhyme label="a" type="f" corresp="#s3:l1">leven</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Als een recht minnaer <rhyme label="b" type="m" corresp="#s3:l2">triumphant</rhyme>:</l>
        <l id="s3:l5" met="4" type="-+">Waer deur gheopent was <rhyme label="b" type="m" corresp="#s3:l2">playsant</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Mijns Vaders rijcke <rhyme label="c" type="f">schoone</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Comt laet ons gaen, gesaemder <rhyme label="b" type="m" corresp="#s3:l2">handt</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Ontfaen des levens <rhyme label="c" type="f" corresp="#s3:l6">croone</rhyme>,</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Werwaerts sal ick my <rhyme label="a" type="f">wenden</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Catyvich mensch! van elck <rhyme label="b" type="m">verfoeyt</rhyme>!</l>
        <l id="s4:l3" met="3" type="-+">Vol druck en swaer <rhyme label="a" type="f" corresp="#s4:l1">ellenden</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Vol sonden ben ick <rhyme label="b" type="m" corresp="#s4:l2">opgegroeyt</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Den tijt mijns levens my <rhyme label="b" type="m" corresp="#s4:l2">vermoeyt</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Dus ben ick quaet <rhyme label="c" type="f">bevonden</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Wat baet my den Mey schoon <rhyme label="b" type="m" corresp="#s4:l2">ghebloeyt</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Ick schame my mijn <rhyme label="c" type="f" corresp="#s4:l6">sonden</rhyme>,</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">My deert u groot <rhyme label="a" type="f">benouwen</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Dies quam ick uyt mijn Vaders <rhyme label="b" type="m">schoot</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Om u reyn fleur der <rhyme label="a" type="f" corresp="#s5:l1">Vrouwen</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Heb ick geopent mijn wonden <rhyme label="b" type="m" corresp="#s5:l2">root</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Kiest nu het leven voor de <rhyme label="b" type="m" corresp="#s5:l2">doot</rhyme>:</l>
        <l id="s5:l6" met="3" type="-+">Om u was ick <rhyme label="c" type="f">gheslaghen</rhyme></l>
        <l id="s5:l7" met="4" type="-+">Aen ‘t cruys, daer ick mijn bloet <rhyme label="b" type="m" corresp="#s5:l2">vergoot</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Stilt doch u bitter <rhyme label="c" type="f" corresp="#s5:l6">klaghen</rhyme>,</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Mijns herten <rhyme label="a" type="f">melodye</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Heb ick verhoort van u <rhyme label="b" type="m">subijt</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Alle <rhyme label="a" type="f" corresp="#s6:l1">melancolye</rhyme></l>
        <l id="s6:l4" met="4" type="-+">En swaer ghepeynsen ben ick <rhyme label="b" type="m" corresp="#s6:l2">quijt</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Nu ben ick in den Geest <rhyme label="b" type="m" corresp="#s6:l2">verblyt</rhyme>:</l>
        <l id="s6:l6" met="3" type="-+">Dat ghy my hebt <rhyme label="c" type="f">ghenesen</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Ick danck u Lief <rhyme label="b" type="m" corresp="#s6:l2">ghebenedijt</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Ghy zijt weerdich <rhyme label="c" type="f" corresp="#s6:l6">gepresen</rhyme>,</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Ick ben een spruyte <rhyme label="a" type="f">Iesse</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Een Soom Davidts, eens Conincx <rhyme label="b" type="m">kint</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Daerom mijn schoon <rhyme label="a" type="f" corresp="#s7:l1">Princesse</rhyme>!</l>
        <l id="s7:l4" met="4" type="-+">Wel salich is hy die my <rhyme label="b" type="m" corresp="#s7:l2">bemint</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Daerom mijn ziele ruste <rhyme label="b" type="m" corresp="#s7:l2">vint</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Want daer staet van my <rhyme label="c" type="f">geschreven</rhyme>:</l>
        <l id="s7:l7" met="4" type="-+">Ick ben die bint ende <rhyme label="b" type="m" corresp="#s7:l2">ontbint</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Die wech, waerheyt, en <rhyme label="c" type="f" corresp="#s7:l6">leven</rhyme>,</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Ick danck u lief vol <rhyme label="a" type="f">eeren</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Princelick Lief van uwe <rhyme label="b" type="m">deught</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Dat ghy my soo comt <rhyme label="a" type="f" corresp="#s8:l1">leeren</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Een schaepken van den wech <rhyme label="b" type="m" corresp="#s8:l2">beweucht</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Ziel ende lijf in my <rhyme label="b" type="m" corresp="#s8:l2">verheucht</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Een minnaer soo ick <rhyme label="c" type="f">rame</rhyme>,</l>
        <l id="s8:l7" met="4" type="-+">In u vind ick de volle <rhyme label="b" type="m" corresp="#s8:l2">vreucht</rhyme>!</l>
        <l id="s8:l8" met="3" type="-+">Heylich is uwen <rhyme label="c" type="f" corresp="#s8:l6">name</rhyme>,</l>
      </lg>
    </lg>
  </text>
</song>

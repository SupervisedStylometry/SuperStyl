    <melody>In dich habe ich gehofft</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HElp my mijn Godt door uwen <rhyme label="a" type="m">Naem</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Recht my voor dijne macht <rhyme label="a" type="m" corresp="#s1:l1">bequaem</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Mijn GOdt verhoort mijn <rhyme label="b" type="f">Beeden</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Aenneemt mijns Mondes Reden <rhyme label="a" type="m" corresp="#s1:l1">tsaem</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Dat ick niet word' <rhyme label="b" type="f" corresp="#s1:l3">vertreden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Want vreemde staen op tegen <rhyme label="a" type="m">my</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">En stercke nae myn Siel, die <rhyme label="a" type="m" corresp="#s2:l1">dy</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Voor ooghen niet en <rhyme label="b" type="f">draghen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Siet Godt staet my ghetrouw'lick <rhyme label="a" type="m" corresp="#s2:l1">by</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Beschermt myn Siel voor <rhyme label="b" type="f" corresp="#s2:l3">plaghen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Hy sal dat boos myn <rhyme label="a" type="m">Vyanden</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Betalen, en verstooren <rhyme label="a" type="m" corresp="#s3:l1">hun</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Door syne ware <rhyme label="b" type="f">trouwe</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">So wil ick dy dan <rhyme label="a" type="m" corresp="#s3:l1">offeren</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Vrywillich sonder <rhyme label="b" type="f" corresp="#s3:l3">rouwe</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ick wil oock uwen name, <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">(Want hy so goet is) dancken <rhyme label="a" type="m" corresp="#s4:l1">seer</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Want ghy hebt my wt <rhyme label="b" type="f">nooden</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Verlost, u hulp haer tot my <rhyme label="a" type="m" corresp="#s4:l1">keer</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Daer ick om heb <rhyme label="b" type="f" corresp="#s4:l3">ghebeden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Dat mijn oog' aen mijn vyant <rhyme label="a" type="m">moet</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Syn lust sien, en verheughen <rhyme label="a" type="m" corresp="#s5:l1">soet</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">En loven uwen <rhyme label="b" type="f">name</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Met all' bedroefde herten <rhyme label="a" type="m" corresp="#s5:l1">goet</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Die ghy verlost hebt, <rhyme label="b" type="f" corresp="#s5:l3">Amen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

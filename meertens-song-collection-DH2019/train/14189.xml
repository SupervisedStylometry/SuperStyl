  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">PEriculeus is desen <rhyme label="a" type="m">tijdt</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Hier op wilt neerstich <rhyme label="b" type="f">mercken</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Ghy die in Godts Ghemeente <rhyme label="a" type="m" corresp="#s1:l1">zijdt</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Die Heere wil u <rhyme label="b" type="f" corresp="#s1:l2">verstercken</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">En geven u zijns geestes <rhyme label="a" type="m">cracht</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Die ghy meucht <rhyme label="b" type="f">overwinnen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En altijt hauden goede <rhyme label="a" type="m" corresp="#s2:l1">wacht</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Wel haer die dit <rhyme label="b" type="f" corresp="#s2:l2">versinnen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Thoont u doch cloec in u <rhyme label="a" type="m">beroep</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Daer ghy zijt toe <rhyme label="b" type="f">begheven</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Dat wort voleynt uwen <rhyme label="a" type="m" corresp="#s3:l1">loep</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Soo Paulus heeft <rhyme label="b" type="f" corresp="#s3:l2">geschreven</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Eens yegelicx beroep hy <rhyme label="a" type="m">stelt</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Den Mannen ende <rhyme label="b" type="f">Vrauwen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Waer in hy soo claerlick <rhyme label="a" type="m" corresp="#s4:l1">vertelt</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Hoe sy haer moeten <rhyme label="b" type="f" corresp="#s4:l2">hauwen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Reyn moet t'wijf onderdanich <rhyme label="a" type="m">zijn</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Den Man als die <rhyme label="b" type="f">Ghemeente</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Christo is onderdanich <rhyme label="a" type="m" corresp="#s5:l1">sijn</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Want sy is zijn <rhyme label="b" type="f" corresp="#s5:l2">ghebeente</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Jae Vleesch van zijnen vleesche <rhyme label="a" type="m">recht</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Soo Moyses gaet <rhyme label="b" type="f">beschrijven</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Daerom moet sy hauden haer <rhyme label="a" type="m" corresp="#s6:l1">Echt</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">En by den Man steets <rhyme label="b" type="f" corresp="#s6:l2">blijven</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Aen gheen dinghen nemen <rhyme label="a" type="m">oorsaeck</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Haren man te <rhyme label="b" type="f">verlaten</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Ten ware dat hy die Echte <rhyme label="a" type="m" corresp="#s7:l1">braeck</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Dit wilt ter herten <rhyme label="b" type="f" corresp="#s7:l2">vaten</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Nae dat haer Godt oock Kinders <rhyme label="a" type="m">geeft</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Die moet sy wel <rhyme label="b" type="f">optrecken</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">En die soo langhe als sy <rhyme label="a" type="m" corresp="#s8:l1">leeft</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Tot Godts vreese <rhyme label="b" type="f" corresp="#s8:l2">verwecken</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Soo ghy alsoo ghetrauwe <rhyme label="a" type="m">blijft</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">In alle goede <rhyme label="b" type="f">wercken</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Met uwen Man oock niet en <rhyme label="a" type="m" corresp="#s9:l1">kijft</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Maer zijn gheloof gaet <rhyme label="b" type="f" corresp="#s9:l2">stercken</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Dochter ghy alsoo salich <rhyme label="a" type="m">wort</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Wel deur het <rhyme label="b" type="f">kinder-baren</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Haut ghy t gheloof vast met <rhyme label="a" type="m" corresp="#s10:l1">accort</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Die Heer wil u <rhyme label="b" type="f" corresp="#s10:l2">bewaren</rhyme>.</l>
      </lg>
    </lg>

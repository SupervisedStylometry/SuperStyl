  <author>Hendrik Jacobz. Soetenboom</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">NV Jongelingen zijt ghy <rhyme label="a" type="m">kranck</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Dat ghy niet meer beproeft den <rhyme label="a" type="m" corresp="#s1:l1">dranck</rhyme>?</l>
        <l id="s1:l3" met="4" type="-+">Drinckt op de gesontheydt van de <rhyme label="b" type="m">Bruydt</rhyme></l>
        <l id="s1:l4" met="4" type="-+">En Bruygom desen Roemer <rhyme label="b" type="m" corresp="#s1:l3">uyt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wel dit neem ick dan daer op <rhyme label="a" type="m">aen</rhyme>:</l>
        <l id="s2:l2" met="4" type="-+">Siet Buur-man wat ick heb <rhyme label="a" type="m" corresp="#s2:l1">gelaen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Dit gaet op de gesontheydt <rhyme label="b" type="m">om</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Van de Bruydt en <rhyme label="b" type="m" corresp="#s2:l3">Bruydegom</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Naeste gebuurtjes, soete <rhyme label="a" type="m">paer</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Wy twee brengen 't u te <rhyme label="a" type="m" corresp="#s3:l1">gaer</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Siet, wat ick aen mijn Monde <rhyme label="b" type="m">doe</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Dit geldt u tot den gronde <rhyme label="b" type="m" corresp="#s3:l3">toe</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Laet sien wat op den Bodem <rhyme label="a" type="m">leyt</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Men sal u doen gewis <rhyme label="a" type="m" corresp="#s4:l1">bescheydt</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Wat, wat, ghy leppert al te <rhyme label="b" type="m">langh</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Hadt ick 't ick gingh een ander <rhyme label="b" type="m" corresp="#s4:l3">gangh</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ja mijn vrient 't waer langh <rhyme label="a" type="m">geschiet</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Maer siet mijn helpster helpt my <rhyme label="a" type="m" corresp="#s5:l1">niet</rhyme>.</l>
        <l id="s5:l3" met="4" type="-+">Ja wis, hy schuyft het al op <rhyme label="b" type="m">mijn</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">En 'k acht ick drinck de meeste <rhyme label="b" type="m" corresp="#s5:l3">Wijn</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Wel moet ick daer dan aen, sa, <rhyme label="a" type="m">sa</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Soo set ick daer mijn lichaem <rhyme label="a" type="m" corresp="#s6:l1">na</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">Siet vriendt, dus hangen handt aen <rhyme label="b" type="m">handt</rhyme></l>
        <l id="s6:l4" met="4" type="-+">De Klocken in ons <rhyme label="b" type="m" corresp="#s6:l3">Vaderlandt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Nu schenckt daer wederom wat <rhyme label="a" type="m">in</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Soo 't geweest is, meer noch <rhyme label="a" type="m" corresp="#s7:l1">min</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Want ick begeer voorseecker <rhyme label="b" type="m">niet</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Dat ons meer rechts als haer <rhyme label="b" type="m" corresp="#s7:l3">geschiet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Ter eeren Bruydt en <rhyme label="a" type="m">Bruydegom</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Hiet dese Roemer <rhyme label="a" type="m" corresp="#s8:l1">wellekom</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">En doet gelijck ick heb <rhyme label="b" type="m">gedaen</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Soo sultge grooten danck <rhyme label="b" type="m" corresp="#s8:l3">begaen</rhyme>.</l>
      </lg>
    </lg>
  </text>

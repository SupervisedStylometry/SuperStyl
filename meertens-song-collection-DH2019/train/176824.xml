    <melody>Haar borstjes in haar boezem</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Hendrik Rintjes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Och Vrienden al te <rhyme label="a" type="f">samen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Ghy die daer vreest den <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Laet ons Christum niet <rhyme label="a" type="f" corresp="#s1:l1">schamen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Hy soud ons schamen <rhyme label="b" type="m" corresp="#s1:l2">weer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">En laet ons doch niet <rhyme label="a" type="f">vresen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Die ‘t Lichaem dooden <rhyme label="b" type="m">hier</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Maer, die de Ziel <rhyme label="a" type="f" corresp="#s2:l1">ghepresen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Mach worpen in ‘t helsch <rhyme label="b" type="m" corresp="#s2:l2">vyer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">De mensch mag men <rhyme label="a" type="f">ontvlieden</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Maer Gods hant niet <rhyme label="b" type="m">ontgaen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Dus laet het dan <rhyme label="a" type="f" corresp="#s3:l1">gheschieden</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Dat sijn wil wordt <rhyme label="b" type="m" corresp="#s3:l2">ghedaen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Al die Godtzaligh <rhyme label="a" type="f">leven</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">In Christo, het is <rhyme label="b" type="m">waer</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Moeten worden <rhyme label="a" type="f" corresp="#s4:l1">verdreven</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Vervolcht, seyt Paulus <rhyme label="b" type="m" corresp="#s4:l2">klaer</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Essias seydt daer <rhyme label="a" type="f">boven</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Wie van qua weghen <rhyme label="b" type="m">keert</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Die moet zijn alle mans <rhyme label="a" type="f" corresp="#s5:l1">roven</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Gods volk men <rhyme label="b" type="m" corresp="#s5:l2">persequeert</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Rechtveerdighe moeten <rhyme label="a" type="f">lijden</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">So de Schriftuyr <rhyme label="b" type="m">vermelt</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Het komt van alle <rhyme label="a" type="f" corresp="#s6:l1">zijden</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Dat men den Christen <rhyme label="b" type="m" corresp="#s6:l2">quelt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Verbeydt met <rhyme label="a" type="f">lijtsaemheden</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Des Heeren dach komt <rhyme label="b" type="m">aen</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">De vroomste sal in <rhyme label="a" type="f" corresp="#s7:l1">vreden</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Met grooter blijtschap <rhyme label="b" type="m" corresp="#s7:l2">staen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Laet ons doch daer op <rhyme label="a" type="f">hopen</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Wachten met <rhyme label="b" type="m">lijdtsaemheyt</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Den Kamp volheerdigh <rhyme label="a" type="f" corresp="#s8:l1">lopen</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Die ons is <rhyme label="b" type="m" corresp="#s8:l2">voorgheleyt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Och Vrienden lief <rhyme label="a" type="f">ghepresen</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Gods vreed’ blijf ons <rhyme label="b" type="m">by</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Het moet ghescheyden <rhyme label="a" type="f" corresp="#s9:l1">wesen</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Bidt hertelick voor <rhyme label="b" type="m" corresp="#s9:l2">my</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

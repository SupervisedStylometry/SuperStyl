    <melody>Het ging een meisje aan de kant</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Daniel Bellemans</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">HEer myn Ziel is seer <rhyme label="a" type="m">bedroeft</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Om de boosheyt van myn <rhyme label="b" type="f">sonden</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Geeft haer troost die sy <rhyme label="a" type="m" corresp="#s1:l1">behoeft</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Dat zyn u vyf roode <rhyme label="b" type="f" corresp="#s1:l2">Wonden</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">'t Kruyt dat my ghenesen <rhyme label="c" type="m">moet</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Is alleen u dierbaer <rhyme label="c" type="m" corresp="#s1:l5">Bloet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Schoon dat ick op d'aerde <rhyme label="a" type="m">staen</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Met weemoedigheydt <rhyme label="b" type="f">bevangen</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Oft myn oogh ten Hemel <rhyme label="a" type="m" corresp="#s2:l1">slaen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Ende sucht met groot <rhyme label="b" type="f" corresp="#s2:l2">verlangen</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Buyten u en vind' ick <rhyme label="c" type="m">niet</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Dat kan troosten myn <rhyme label="c" type="m" corresp="#s2:l5">verdriet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Jesu en verstoot my <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Al siet ghy my in veel <rhyme label="b" type="f">sonden</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Maer ick bidd' u dat ghy <rhyme label="a" type="m" corresp="#s3:l1">siet</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Naer u vyf bebloede <rhyme label="b" type="f" corresp="#s3:l2">Wonden</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">En gheneest myn sieck <rhyme label="c" type="m">ghemoet</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Door u reyn, en dierbaer <rhyme label="c" type="m" corresp="#s3:l5">Bloet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Ick die eens vondt grooten <rhyme label="a" type="m">smaeck</rhyme></l>
        <l id="s4:l2" met="4" type="+-">In ghenucht te moghen <rhyme label="b" type="f">pleghen</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Vind' in tranen nu <rhyme label="a" type="m" corresp="#s4:l1">vermaeck</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">'k Vind' in tranen troost en <rhyme label="b" type="f" corresp="#s4:l2">zegen</rhyme></l>
        <l id="s4:l5" met="4" type="+-">Tranen zyn myns hertẽ <rhyme label="c" type="m">wensch</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Van my arme sondigh <rhyme label="c" type="m" corresp="#s4:l5">mensch</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Weenen is een soete <rhyme label="a" type="m">vreught</rhyme></l>
        <l id="s5:l2" met="4" type="+-">'t Alder-soetste van myn <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Soeter als de soete <rhyme label="a" type="m" corresp="#s5:l1">jeught</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Aen een jeugdig hert kan <rhyme label="b" type="f" corresp="#s5:l2">geven</rhyme>:</l>
        <l id="s5:l5" met="4" type="+-">Weent dan, schreyt dan myn <rhyme label="c" type="m">ghesicht</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Tot dat Godt u hert <rhyme label="c" type="m" corresp="#s5:l5">verlicht</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Als ick Jesum heden <rhyme label="a" type="m">badt</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">En daer sagh myn tranen <rhyme label="b" type="f">vlieten</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">En daer sagh het siltigh <rhyme label="a" type="m" corresp="#s6:l1">nat</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Langhs myn wanghen <rhyme label="b" type="f" corresp="#s6:l2">nederschieten</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Sprongh myn hert van vreught <rhyme label="c" type="m">om-hoogh</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Met de tranen in myn' <rhyme label="c" type="m" corresp="#s6:l5">oogh</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">'k Seyd' ô Godt myn hooghste <rhyme label="a" type="m">goedt</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Siet daer is myn <rhyme label="b" type="f">Offerhande</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Een ootmoedigh droef <rhyme label="a" type="m" corresp="#s7:l1">ghemoet</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Dat gheef ick aen u te <rhyme label="b" type="f" corresp="#s7:l2">pande</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">'k Weet dat noyt een treurigh <rhyme label="c" type="m">hert</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Van u Heer verstooten <rhyme label="c" type="m" corresp="#s7:l5">wert</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Myn droef hert dat is de <rhyme label="a" type="m">Kerck</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Daer ick u bidd' met <rhyme label="b" type="f">verlanghen</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Tranen zyn myn <rhyme label="a" type="m" corresp="#s8:l1">offer-werck</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Heere wiltse toch <rhyme label="b" type="f" corresp="#s8:l2">ontfanghen</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Want sy komen uyt de <rhyme label="c" type="m">borst</rhyme></l>
        <l id="s8:l6" met="4" type="+-">Die naer uwen Zeghen <rhyme label="c" type="m" corresp="#s8:l5">dorst</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Met de tranen van myn <rhyme label="a" type="m">oogh'</rhyme></l>
        <l id="s9:l2" met="4" type="+-">Gingh ick Jesus Naem daer <rhyme label="b" type="f">schryven</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">En ick badt met 't hert <rhyme label="a" type="m" corresp="#s9:l1">om-hoog</rhyme></l>
        <l id="s9:l4" met="4" type="+-">Dat hy in myn hert soud' <rhyme label="b" type="f" corresp="#s9:l2">blyven</rhyme>,</l>
        <l id="s9:l5" met="4" type="+-">En daer schryven met syn <rhyme label="c" type="m">Bloet</rhyme></l>
        <l id="s9:l6" met="4" type="+-">Synen Naem in myn <rhyme label="c" type="m" corresp="#s9:l5">ghemoet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Naboths Wynberg was <rhyme label="a" type="f">gelegen</rhyme></l>
        <l id="s1:l2" met="3" type="+-">Te <rhyme label="b" type="m">Israël</rhyme></l>
        <l id="s1:l3" met="4" type="+-">In Achabs Paleys ter <rhyme label="a" type="f" corresp="#s1:l1">degen</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">Seer bequaam en <rhyme label="b" type="m" corresp="#s1:l2">wel</rhyme></l>
        <l id="s1:l5" met="4" type="+-">Om eenen Kool hof   te <rhyme label="c" type="f">maken</rhyme></l>
        <l id="s1:l6" met="3" type="+-">Voor Achab <rhyme label="d" type="m">onvroed</rhyme>.</l>
        <l id="s1:l7" met="4" type="+-">Dus Achab, met vuurig <rhyme label="c" type="f" corresp="#s1:l5">haken</rhyme>,</l>
        <l id="s1:l8" met="3" type="+-">Sprack tot Naboth <rhyme label="d" type="m" corresp="#s1:l6">soet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">‘Geeft my u Wynberg <rhyme label="a" type="f">gepresen</rhyme>’,</l>
        <l id="s2:l2" met="3" type="+-">Heeft Achab <rhyme label="b" type="m">vertelt</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">‘Voor een beter <rhyme label="a" type="f" corresp="#s2:l1">uytgelesen</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">Of, wilt gy,   voor <rhyme label="b" type="m" corresp="#s2:l2">Geldt</rhyme>.’</l>
        <l id="s2:l5" met="4" type="+-">Maar Naboth, ten selven <rhyme label="c" type="f">keeren</rhyme>,</l>
        <l id="s2:l6" met="3" type="+-">Sprack tot Achab <rhyme label="d" type="m">syn</rhyme>:</l>
        <l id="s2:l7" met="4" type="+-">‘Dat laat dan Heer der <rhyme label="c" type="f" corresp="#s2:l5">Heeren</rhyme></l>
        <l id="s2:l8" met="3" type="+-">Verre van myn <rhyme label="d" type="m" corresp="#s2:l6">zyn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Soud’ ik u myn Vaders <rhyme label="a" type="f">Erven</rhyme></l>
        <l id="s3:l2" met="3" type="+-">Geven’, sprack <rhyme label="b" type="m">Naboth</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">‘Ende mynen Wynberg <rhyme label="a" type="f" corresp="#s3:l1">derven</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">Dat en late <rhyme label="b" type="m" corresp="#s3:l2">Godt</rhyme></l>
        <l id="s3:l5" met="4" type="+-">My doch niet toe.’ Dees <rhyme label="c" type="f">antwoorde</rhyme></l>
        <l id="s3:l6" met="3" type="+-">Soo van Naboth <rhyme label="d" type="m">quam</rhyme>.</l>
        <l id="s3:l7" met="4" type="+-">Hierom hem Achab <rhyme label="c" type="f" corresp="#s3:l5">verstoorde</rhyme>,</l>
        <l id="s3:l8" met="3" type="+-">Toornig ende <rhyme label="d" type="m" corresp="#s3:l6">gram</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">En hy ging na Huys al <rhyme label="a" type="f">treuren</rhyme>,</l>
        <l id="s4:l2" met="3" type="+-">In syn Geest <rhyme label="b" type="m">bedroeft</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Ende heeft t’ eeniger <rhyme label="a" type="f" corresp="#s4:l1">uren</rhyme></l>
        <l id="s4:l4" met="3" type="+-">Oock geen Brood <rhyme label="b" type="m" corresp="#s4:l2">geproeft</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Want droefheyd had hem <rhyme label="c" type="f">bevangen</rhyme></l>
        <l id="s4:l6" met="3" type="+-">En benouwt seer <rhyme label="d" type="m">fel</rhyme>.</l>
        <l id="s4:l7" met="4" type="+-">Siet, toe quam tot hem <rhyme label="c" type="f" corresp="#s4:l5">gegangen</rhyme></l>
        <l id="s4:l8" met="3" type="+-">Syn Wyf <rhyme label="d" type="m" corresp="#s4:l6">Jesabel</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">En sy sprack: ‘Wat ik <rhyme label="a" type="f">heden</rhyme></l>
        <l id="s5:l2" met="3" type="+-">Voor een droefheyd <rhyme label="b" type="m">siet</rhyme>?’</l>
        <l id="s5:l3" met="4" type="+-">Achab sprack: ‘Ick heb <rhyme label="a" type="f" corresp="#s5:l1">gebeden</rhyme>,</l>
        <l id="s5:l4" met="3" type="+-">Aan Naboth met <rhyme label="b" type="m" corresp="#s5:l2">vlied</rhyme></l>
        <l id="s5:l5" met="4" type="+-">Om sijnen Wyngaard <rhyme label="c" type="f">verheven</rhyme>:</l>
        <l id="s5:l6" met="3" type="+-">Ick sprack met <rhyme label="d" type="m">bescheyt</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Maar hy wiltse myn niet <rhyme label="c" type="f" corresp="#s5:l5">geven</rhyme>,</l>
        <l id="s5:l8" met="3" type="+-">Hy is my <rhyme label="d" type="m" corresp="#s5:l6">ontseyd</rhyme>.’</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Isabel ten selven <rhyme label="a" type="f">stonden</rhyme></l>
        <l id="s6:l2" met="3" type="+-">Sprack: ‘ ‘t En is geen <rhyme label="b" type="m">noot</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Daarom weest goets moets <rhyme label="a" type="f" corresp="#s6:l1">bevonden</rhyme>.</l>
        <l id="s6:l4" met="3" type="+-">Komt, wilt eten <rhyme label="b" type="m" corresp="#s6:l2">broodt</rhyme>;</l>
        <l id="s6:l5" met="4" type="+-">Ik sal u den Wijn-berg <rhyme label="c" type="f">schoone</rhyme></l>
        <l id="s6:l6" met="3" type="+-">Hebben doen seer <rhyme label="d" type="m">snel</rhyme>.</l>
        <l id="s6:l7" met="4" type="+-">Wat waar u Koninglycke <rhyme label="c" type="f" corresp="#s6:l5">Kroone</rhyme></l>
        <l id="s6:l8" met="3" type="+-">Dog in <rhyme label="d" type="m" corresp="#s6:l6">Israël</rhyme>! ‘</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Dus heeft zy Brieven <rhyme label="a" type="f">geschreven</rhyme>,</l>
        <l id="s7:l2" met="3" type="+-">Aan d’Oudsten der <rhyme label="b" type="m">stad</rhyme>:</l>
        <l id="s7:l3" met="4" type="+-">‘Gy sult Naboth nemen ‘t <rhyme label="a" type="f" corresp="#s7:l1">leven</rhyme>,</l>
        <l id="s7:l4" met="3" type="+-">Ick beveel u <rhyme label="b" type="m" corresp="#s7:l2">dat</rhyme>.</l>
        <l id="s7:l5" met="4" type="+-">Dus stellet   twee loose <rhyme label="c" type="f">Boeven</rhyme>,</l>
        <l id="s7:l6" met="3" type="+-">Boos en <rhyme label="d" type="m">obstinaat</rhyme>,</l>
        <l id="s7:l7" met="4" type="+-">Die tuygen na het <rhyme label="c" type="f" corresp="#s7:l5">behoeven</rhyme>,</l>
        <l id="s7:l8" met="3" type="+-">Van Naboths <rhyme label="d" type="m" corresp="#s7:l6">misdaad</rhyme>.’</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Die Oudtsten hebben <rhyme label="a" type="f">gemeenen</rhyme>,</l>
        <l id="s8:l2" met="3" type="+-">Met Commissie <rhyme label="b" type="m">groot</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Naboth aldaar doen <rhyme label="a" type="f" corresp="#s8:l1">steenen</rhyme></l>
        <l id="s8:l4" met="3" type="+-">En brengen ter <rhyme label="b" type="m" corresp="#s8:l2">doodt</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">En sy zeiden <rhyme label="c" type="f">onverholen</rhyme></l>
        <l id="s8:l6" met="3" type="+-">Aan Isabel <rhyme label="d" type="m">saan</rhyme>:</l>
        <l id="s8:l7" met="4" type="+-">‘Alsoo gy ons hebt <rhyme label="c" type="f" corresp="#s8:l5">bevoolen</rhyme>,</l>
        <l id="s8:l8" met="3" type="+-">Hebben wy <rhyme label="d" type="m" corresp="#s8:l6">gedaan</rhyme>.’</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Als nu Isabel dat <rhyme label="a" type="f">hoorde</rhyme>,</l>
        <l id="s9:l2" met="3" type="+-">Dat Naboth dood <rhyme label="b" type="m">was</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Na Achab was ‘t dat zy <rhyme label="a" type="f" corresp="#s9:l1">spoorde</rhyme></l>
        <l id="s9:l4" met="3" type="+-">En zyde hem <rhyme label="b" type="m" corresp="#s9:l2">ras</rhyme>:</l>
        <l id="s9:l5" met="4" type="+-">‘Staat nu op, wilt droefheyd <rhyme label="c" type="f">slyten</rhyme>.</l>
        <l id="s9:l6" met="3" type="+-">Neemt den Wyn-berg, <rhyme label="d" type="m">Heer</rhyme>,</l>
        <l id="s9:l7" met="4" type="+-">Naboths des <rhyme label="c" type="f" corresp="#s9:l5">Israelyten</rhyme>,</l>
        <l id="s9:l8" met="3" type="+-">Hy en leeft niet <rhyme label="d" type="m" corresp="#s9:l6">meer</rhyme>.’</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Achab stond op met <rhyme label="a" type="f">verblyden</rhyme>,</l>
        <l id="s10:l2" met="3" type="+-">En ging met ’er <rhyme label="b" type="m">spoet</rhyme></l>
        <l id="s10:l3" met="4" type="+-">In den Wijn-berg, sonder <rhyme label="a" type="f" corresp="#s10:l1">mijden</rhyme>,</l>
        <l id="s10:l4" met="3" type="+-">Van Naboth seer <rhyme label="b" type="m" corresp="#s10:l2">soet</rhyme>.</l>
        <l id="s10:l5" met="4" type="+-">Daar ging hy sonder <rhyme label="c" type="f">cesseren</rhyme>,</l>
        <l id="s10:l6" met="3" type="+-">Maar op ‘t selve <rhyme label="d" type="m">pas</rhyme></l>
        <l id="s10:l7" met="4" type="+-">Doen quam daar het woort des <rhyme label="c" type="f" corresp="#s10:l5">Heeren</rhyme>,</l>
        <l id="s10:l8" met="3" type="+-">En riep: <rhyme label="d" type="m" corresp="#s10:l6">‘Elias</rhyme>,</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Maakt u op zonder <rhyme label="a" type="f">vertsagen</rhyme>,</l>
        <l id="s11:l2" met="3" type="+-">Seght Achab dien <rhyme label="b" type="m">sin</rhyme>:</l>
        <l id="s11:l3" met="4" type="+-">‘Gy hebt Naboth doot <rhyme label="a" type="f" corresp="#s11:l1">geslagen</rhyme></l>
        <l id="s11:l4" met="3" type="+-">En genomen <rhyme label="b" type="m" corresp="#s11:l2">in</rhyme></l>
        <l id="s11:l5" met="4" type="+-">Die plaats zonder <rhyme label="c" type="f">vertrecken</rhyme>.</l>
        <l id="s11:l6" met="3" type="+-">Daar naboths bloet <rhyme label="d" type="m">swaar</rhyme></l>
        <l id="s11:l7" met="4" type="+-">Lagh, sullen de Honden <rhyme label="c" type="f" corresp="#s11:l5">lecken</rhyme></l>
        <l id="s11:l8" met="3" type="+-">Achabs bloedt <rhyme label="d" type="m" corresp="#s11:l6">voorwaer</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Te Israel aan de <rhyme label="a" type="f">Muuren</rhyme>,</l>
        <l id="s12:l2" met="3" type="+-">Spreekt de Heere <rhyme label="b" type="m">vry</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">Sullen de Honden <rhyme label="a" type="f" corresp="#s12:l1">verscheuren</rhyme>,</l>
        <l id="s12:l4" met="3" type="+-">Iezabel, dog <rhyme label="b" type="m" corresp="#s12:l2">sy</rhyme></l>
        <l id="s12:l5" met="4" type="+-">Werd van de honden <rhyme label="c" type="f">gegeten</rhyme></l>
        <l id="s12:l6" met="3" type="+-">Tot een eeuwige <rhyme label="d" type="m">schandt</rhyme>,</l>
        <l id="s12:l7" met="4" type="+-">Want sy dooden de <rhyme label="c" type="f" corresp="#s12:l5">Propheten</rhyme></l>
        <l id="s12:l8" met="3" type="+-">En Naboth <rhyme label="d" type="m" corresp="#s12:l6">valjant</rhyme>.’</l>
      </lg>
    </lg>
  </text>
</song>

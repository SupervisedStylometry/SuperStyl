  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">GHedronghen ben ick in mijn <rhyme label="a" type="m">gemoet</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Een liet te dichten wt liefden <rhyme label="a" type="m" corresp="#s1:l1">soet</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Hoe datmen nu // al sonder <rhyme label="b" type="m">gru</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">niet leven en <rhyme label="c" type="m">mach</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Die Godt wil dienen nacht en <rhyme label="c" type="m" corresp="#s1:l4">dach</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Alsoo't wel blijckt in elck <rhyme label="a" type="m">quartier</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Die naer wil volghen t'lam <rhyme label="a" type="m" corresp="#s2:l1">goedertier</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Die wert benijt // verjaecht niet <rhyme label="b" type="m">spijt</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">Als een die <rhyme label="c" type="m">daer</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">In alle boosheyt leeft <rhyme label="c" type="m" corresp="#s2:l4">voorwaer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ten rechten heeft Paulus wel <rhyme label="a" type="m">gheseyt</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Tot Timotheus met claer <rhyme label="a" type="m" corresp="#s3:l1">bescheyt</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Die leuen wil // godsalich <rhyme label="b" type="m">stil</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">In Christo <rhyme label="c" type="m">fijn</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Die moeten hier veruolghet <rhyme label="c" type="m" corresp="#s3:l4">zijn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Als ick in boosheyt leefde <rhyme label="a" type="m">fel</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">En liep van deen sonde in d'ander <rhyme label="a" type="m" corresp="#s4:l1">snel</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Dan hebben sy, ghepresen <rhyme label="b" type="m">my</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">Dit wel aen <rhyme label="c" type="m">siet</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Tot dat ick schiet, wt sulcke <rhyme label="c" type="m" corresp="#s4:l4">verdriet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Aldus lach ick al totter <rhyme label="a" type="m">doot</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Ghewont in veel perijckel <rhyme label="a" type="m" corresp="#s5:l1">groot</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Niemant van haer, en quam my <rhyme label="b" type="m">naer</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">Met olye <rhyme label="c" type="m">goet</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Om te cureeren zijt dies wel <rhyme label="c" type="m" corresp="#s5:l4">vroet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Als ick sach en merckten <rhyme label="a" type="m">claer</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Den cleeynen troost dien ick van <rhyme label="a" type="m" corresp="#s6:l1">haer</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Hebbe ontfaen, so liep ick <rhyme label="b" type="m">saen</rhyme>,</l>
        <l id="s6:l4" met="2" type="-+">Deur groot <rhyme label="c" type="m">ghe-pijn</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Al tot een ander <rhyme label="c" type="m" corresp="#s6:l4">medecijn</rhyme>,</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Doe ick nu seer hadde <rhyme label="a" type="m">gheschreyt</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Quam daer by my deur <rhyme label="a" type="m" corresp="#s7:l1">lijtsaemheyt</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Wt liefden saen, een <rhyme label="b" type="m">Samaritaen</rhyme>,</l>
        <l id="s7:l4" met="2" type="-+">Met Olye <rhyme label="c" type="m">ras</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Daer mee dat hy mijn wonden <rhyme label="c" type="m" corresp="#s7:l4">ghenas</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Als ick dit nu alle hebbe <rhyme label="a" type="m">ghesien</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Die my hier voormaels hoort mijn <rhyme label="a" type="m" corresp="#s8:l1">bedien</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Met haer lieden een, hielden soot <rhyme label="b" type="m">scheen</rhyme>,</l>
        <l id="s8:l4" met="2" type="-+">In goet <rhyme label="c" type="m">accoort</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Van haer verdreven ben ick nu <rhyme label="c" type="m" corresp="#s8:l4">voor</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Om dat ick niet en wilde <rhyme label="a" type="m">saen</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Den levendighen Godt af <rhyme label="a" type="m" corresp="#s9:l1">gaen</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">En sweeren Cloeck, deur haer <rhyme label="b" type="m">versoeck</rhyme>,</l>
        <l id="s9:l4" met="2" type="-+">Eenen eet seer <rhyme label="c" type="m">groot</rhyme></l>
        <l id="s9:l5" met="4" type="-+">Dwelck men niet doen en mach op die <rhyme label="c" type="m" corresp="#s9:l4">doot</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Ghelijckmen leest Matheus <rhyme label="a" type="m">claer</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Daer Christus spreeckt int <rhyme label="a" type="m" corresp="#s10:l1">openbaer</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Ghy en sult niet, hoort mijn <rhyme label="b" type="m">bediet</rhyme>,</l>
        <l id="s10:l4" met="2" type="-+">Sweeren wie dat <rhyme label="c" type="m">sy</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Dan Jae en neen, en blijven daer <rhyme label="c" type="m" corresp="#s10:l4">by</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Maer die werelt quaet van <rhyme label="a" type="m">dangier</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Versmaet nu gods woorden <rhyme label="a" type="m" corresp="#s11:l1">schier</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">En naer haer lust, leven sy <rhyme label="b" type="m">gherust</rhyme>,</l>
        <l id="s11:l4" met="2" type="-+">In <rhyme label="c" type="m">onverstant</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Och heere bietse toch uwe <rhyme label="c" type="m" corresp="#s11:l4">hant</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Oorlof mijn vrienden van herten <rhyme label="a" type="m">reyn</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Fondeert u op Christum den <rhyme label="a" type="m" corresp="#s12:l1">steyn</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">En op menschen raet, toch niet en <rhyme label="b" type="m">staet</rhyme>,</l>
        <l id="s12:l4" met="2" type="-+">Als een die <rhyme label="c" type="m">sneeft</rhyme>,</l>
        <l id="s12:l5" met="4" type="-+">Maer blijft by hem die daer eewich <rhyme label="c" type="m" corresp="#s12:l4">leeft</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

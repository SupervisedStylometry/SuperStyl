    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Daniel Bellemans</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HOe word' ick verstroeyt van allen <rhyme label="a" type="m">kant</rhyme>,</l>
        <l id="s1:l2" met="7" type="-+">Met alder-ley nieuw' maren van de Princen van het <rhyme label="a" type="m" corresp="#s1:l1">Landt</rhyme>;</l>
        <l id="s1:l3" met="3" type="-+">Gheen Maren van de <rhyme label="b" type="m">faem</rhyme></l>
        <l id="s1:l4" met="3" type="-+">En zyn my <rhyme label="b" type="m" corresp="#s1:l3">aenghenaem</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Ten zy die my <rhyme label="c" type="f">verklaren</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Hoe Jesus liefde <rhyme label="d" type="m">brandt</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">'k En hoor naer geen nieuw' <rhyme label="c" type="f" corresp="#s1:l5">maren</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Als van 't Hemels <rhyme label="d" type="m" corresp="#s1:l6">Vader-landt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Studeer' ick, oft lees ick somtydts <rhyme label="a" type="m">iet</rhyme>,</l>
        <l id="s2:l2" met="7" type="-+">Ten zy ick lees van Jesus, soo en smaeckt die les my <rhyme label="a" type="m" corresp="#s2:l1">niet</rhyme>;</l>
        <l id="s2:l3" met="3" type="-+">'k En lees gheen Brieven <rhyme label="b" type="m">meer</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Als Brieven van den <rhyme label="b" type="m" corresp="#s2:l3">Heer</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">In d'uyt-ghelese <rhyme label="c" type="f">Boecken</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Van d'Heylighe <rhyme label="d" type="m">Schriftuer</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Gaen ick nieuw' maren <rhyme label="c" type="f" corresp="#s2:l5">soecken</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Daer staet Jesus <rhyme label="d" type="m" corresp="#s2:l6">Signatuer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">De Schippers die kouten van den <rhyme label="a" type="m">windt</rhyme>,</l>
        <l id="s3:l2" met="7" type="-+">Den Bruygom gaet verhalen, hoe dat hem syn' Bruydt <rhyme label="a" type="m" corresp="#s3:l1">bemindt</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Maer wiêns <rhyme label="b" type="m">in-ghewant</rhyme></l>
        <l id="s3:l4" met="3" type="-+">In Jesus liefde <rhyme label="b" type="m" corresp="#s3:l3">brandt</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Die sal van Jesus <rhyme label="c" type="f">spreken</rhyme>;</l>
        <l id="s3:l6" met="3" type="-+">Want diën soeten <rhyme label="d" type="m">windt</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Sal 't vier noch meer <rhyme label="c" type="f" corresp="#s3:l5">ontsteken</rhyme></l>
        <l id="s3:l8" met="4" type="+-">Van den Heer die hy <rhyme label="d" type="m" corresp="#s3:l6">bemindt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Dat ander' verhalen hoe dat 't <rhyme label="a" type="m">Graen</rhyme>,</l>
        <l id="s4:l2" met="7" type="-+">En hoe de Wyngaert-rancken in den Ooghst gheladen <rhyme label="a" type="m" corresp="#s4:l1">staen</rhyme>:</l>
        <l id="s4:l3" met="3" type="-+">Ick vraegh <rhyme label="b" type="m">alleenelyck</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Hoe schoon en <rhyme label="b" type="m" corresp="#s4:l3">ryckelyck</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Dat bloeyt dẽ Boom van 't <rhyme label="c" type="f">Leven</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">En dien soeten <rhyme label="d" type="m">wyn</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Die Jesus ons sal <rhyme label="c" type="f" corresp="#s4:l5">gheven</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Als wy by hem sullen <rhyme label="d" type="m" corresp="#s4:l6">zyn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">En spreeckt my van gheenen Oorlogh <rhyme label="a" type="m">meer</rhyme>,</l>
        <l id="s5:l2" met="7" type="-+">Hoe dat den vromen Kryghs-man in den Krygh lof kryght en <rhyme label="a" type="m" corresp="#s5:l1">eer</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Maer seght hoe Jesus <rhyme label="b" type="m">strydt</rhyme></l>
        <l id="s5:l4" met="3" type="-+">In liefd' en <rhyme label="b" type="m" corresp="#s5:l3">minsaemheydt</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Om 't roodt Kasteel te <rhyme label="c" type="f">winnen</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Ons hert' dat hy <rhyme label="d" type="m">bemindt</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Op dat den Heer daer <rhyme label="c" type="f" corresp="#s5:l5">binnen</rhyme></l>
        <l id="s5:l8" met="4" type="+-">Synen Throon en Woon-stê <rhyme label="d" type="m" corresp="#s5:l6">vindt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Wat raeckt hem een Schip met Indisch <rhyme label="a" type="m">gout</rhyme>,</l>
        <l id="s6:l2" met="7" type="-+">Die van gheen goedt des Wereldts als van 't hoogste goet en <rhyme label="a" type="m" corresp="#s6:l1">hout</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Ick acht voor groot <rhyme label="b" type="m">profyt</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Dat een Roomsch lason <rhyme label="b" type="m" corresp="#s6:l3">strydt</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Om 't gulden Vlies te <rhyme label="c" type="f">winnen</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Van den Japonschen <rhyme label="d" type="m">Draeck</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Om Mooren, en <rhyme label="c" type="f" corresp="#s6:l5">Moorinnen</rhyme></l>
        <l id="s6:l8" met="4" type="+-">Te bekeeren met <rhyme label="d" type="m" corresp="#s6:l6">vermaeck</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Gheen tydingh en acht ick van de <rhyme label="a" type="m">Jacht</rhyme>,</l>
        <l id="s7:l2" met="7" type="-+">Hoe daer de wilde Dieren worden in het net <rhyme label="a" type="m" corresp="#s7:l1">ghebracht</rhyme>:</l>
        <l id="s7:l3" met="3" type="-+">De Jacht die my <rhyme label="b" type="m">behaeght</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">En daer my n' Ziel naer <rhyme label="b" type="m" corresp="#s7:l3">jaeght</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Die is daer de <rhyme label="c" type="f">Barbaren</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">En wilde tot Godts <rhyme label="d" type="m">eer</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Gheraken in het <rhyme label="c" type="f" corresp="#s7:l5">garen</rhyme>,</l>
        <l id="s7:l8" met="4" type="+-">Ende netten van den <rhyme label="d" type="m" corresp="#s7:l6">Heer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">In 't Hofken daer Iudas Jesum <rhyme label="a" type="m">vanght</rhyme>,</l>
        <l id="s8:l2" met="7" type="-+">Daer maeck ick de Warande daer myn hert' naer Godt <rhyme label="a" type="m" corresp="#s8:l1">verlanght</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Myn goudt-meyn' is syn <rhyme label="b" type="m">Zyd'</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Die open staet voor <rhyme label="b" type="m" corresp="#s8:l3">my</rhyme>;</l>
        <l id="s8:l5" met="3" type="-+">Ick woon in d'open <rhyme label="c" type="f">Wonden</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Van mynen soeten <rhyme label="d" type="m">Heer</rhyme>:</l>
        <l id="s8:l7" met="3" type="-+">Ick ben in Godt <rhyme label="c" type="f" corresp="#s8:l5">verslonden</rhyme>,</l>
        <l id="s8:l8" met="4" type="+-">Ick en ken gheen Werelt <rhyme label="d" type="m" corresp="#s8:l6">meer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

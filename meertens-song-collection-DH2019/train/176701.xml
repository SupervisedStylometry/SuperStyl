  <author>Hendrik Rintjes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Heer wilt my <rhyme label="a" type="f">verhooren</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">En neycht daer toe u <rhyme label="a" type="f" corresp="#s1:l1">Ooren</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Want ick ben seer <rhyme label="b" type="m">bedroeft</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Over mijn swaer <rhyme label="c" type="f">ellende</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Waer ick my keer of <rhyme label="c" type="f" corresp="#s1:l4">wende</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Mijn ziel wel troost <rhyme label="b" type="m" corresp="#s1:l3">behoeft</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Als ick my gae <rhyme label="a" type="f">deur-soecken</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Deur-sie in alle <rhyme label="a" type="f" corresp="#s2:l1">hoecken</rhyme>.</l>
        <l id="s2:l3" met="3" type="-+">So vind’ ick my <rhyme label="b" type="m">beswaert</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Over mijn veel <rhyme label="c" type="f">ghebreken</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Die ick in my vind’ <rhyme label="c" type="f" corresp="#s2:l4">steken</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">O Heer, my doch <rhyme label="b" type="m" corresp="#s2:l3">bewaert</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Mijn hert dat doet my <rhyme label="a" type="f">truyren</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Dat ick in de <rhyme label="a" type="f" corresp="#s3:l1">Schriftuyren</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Verstae Gods wille <rhyme label="b" type="m">reyn</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En daer by meet mijn <rhyme label="c" type="f">leven</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Mijn swackheyt daer <rhyme label="c" type="f" corresp="#s3:l4">beneven</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En oock mijn kracht seer <rhyme label="b" type="m" corresp="#s3:l3">kleyn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Mijn ghedachten en <rhyme label="a" type="f">sinnen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Benauwen my van <rhyme label="a" type="f" corresp="#s4:l1">binnen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Om dat ick niet en <rhyme label="b" type="m">ben</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">In alle mijne <rhyme label="c" type="f">weghen</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Voor Gods Ooghen te <rhyme label="c" type="f" corresp="#s4:l4">deghen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Dien ick my schuldigh <rhyme label="b" type="m" corresp="#s4:l3">ken</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Och mochte ik <rhyme label="a" type="f">beweenen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Met droeve tranen <rhyme label="a" type="f" corresp="#s5:l1">reenen</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">De onvolmaecktheyt <rhyme label="b" type="m">mijn</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">En oock ghenaed’ <rhyme label="c" type="f">verwerven</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Mijn vleesch en bloet te <rhyme label="c" type="f" corresp="#s5:l4">sterven</rhyme></l>
        <l id="s5:l6" met="3" type="-+">En Godt ghehoorsaem <rhyme label="b" type="m" corresp="#s5:l3">zijn</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Daerom is mijn <rhyme label="a" type="f">begheeren</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Tot Godt den Heer, vol <rhyme label="a" type="f" corresp="#s6:l1">eeren</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Dat hy my wil <rhyme label="b" type="m">aensien</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">En sijn ghenade <rhyme label="c" type="f">gheven</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Om nae sijn wil <rhyme label="c" type="f" corresp="#s6:l4">verheven</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Te doen, en ‘t quaet te <rhyme label="b" type="m" corresp="#s6:l3">vlien</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Want buyten sijn <rhyme label="a" type="f">ghenaede</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Vermach ick vroegh noch <rhyme label="a" type="f" corresp="#s7:l1">spade</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Te doen nae sijn <rhyme label="b" type="m">bevel</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Daerom roep ick, O <rhyme label="c" type="f">Heere</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Komt mijn te hulpe <rhyme label="c" type="f" corresp="#s7:l4">seere</rhyme></l>
        <l id="s7:l6" met="3" type="-+">In mijnen strijdt <rhyme label="b" type="m" corresp="#s7:l3">rebel</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Op dat ick in mijn <rhyme label="a" type="f">strijden</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Het quaet altijdt mach <rhyme label="a" type="f" corresp="#s8:l1">mijden</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Dat mijn gheest <rhyme label="b" type="m">wederstaet</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">En ‘t goede mach <rhyme label="c" type="f">aen-vaten</rhyme></l>
        <l id="s8:l5" met="3" type="-+">En dat oock niet <rhyme label="c" type="f" corresp="#s8:l4">verlaten</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Komt my, O Heer, te <rhyme label="b" type="m" corresp="#s8:l3">baet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">O Heer, vol van <rhyme label="a" type="f">weldaden</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Leyt my soch op u <rhyme label="a" type="f" corresp="#s9:l1">paden</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">En sterckt my in der <rhyme label="b" type="m">noot</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Op dat ick ras mach <rhyme label="c" type="f">treden</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Den rechten wech van <rhyme label="c" type="f" corresp="#s9:l4">vreden</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Door u ghenade <rhyme label="b" type="m" corresp="#s9:l3">groot</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Op dat ick al mijn <rhyme label="a" type="f">daghen</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Vol-eyndt nae u <rhyme label="a" type="f" corresp="#s10:l1">behaghen</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">En niet nae ‘s werelts <rhyme label="b" type="m">lust</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Maer nae u woort <rhyme label="c" type="f">ydoone</rhyme></l>
        <l id="s10:l5" met="3" type="-+">Dat suyver is en <rhyme label="c" type="f" corresp="#s10:l4">schoone</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Tot mijnder zielen <rhyme label="b" type="m" corresp="#s10:l3">rust</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">En als u dan mach <rhyme label="a" type="f">prijsen</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Oock alle eer <rhyme label="a" type="f" corresp="#s11:l1">bewijsen</rhyme></l>
        <l id="s11:l3" met="3" type="-+">Met rechte <rhyme label="b" type="m">danckbaerheyt</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Met ziel en met <rhyme label="c" type="f">Lichame</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Maeckt my hier toe <rhyme label="c" type="f" corresp="#s11:l4">bequame</rhyme></l>
        <l id="s11:l6" met="3" type="-+">Door u <rhyme label="b" type="m" corresp="#s11:l3">Barmhertigheyt</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">O Heere groot van <rhyme label="a" type="f">weerden</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Wilt my doch nu <rhyme label="a" type="f" corresp="#s12:l1">aenveerden</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">En mijn ghebedt <rhyme label="b" type="m">verhoort</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Nu en tot allen <rhyme label="c" type="f">stonden</rhyme></l>
        <l id="s12:l5" met="3" type="-+">Bid ick uyt herten <rhyme label="c" type="f" corresp="#s12:l4">gronden</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Mijn ziele gheeft <rhyme label="b" type="m" corresp="#s12:l3">confoort</rhyme></l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Waer deur ick u mach <rhyme label="a" type="f">loven</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">En uwen naem daer <rhyme label="a" type="f" corresp="#s13:l1">boven</rhyme></l>
        <l id="s13:l3" met="3" type="-+">Uyt blijder herten <rhyme label="b" type="m">fijn</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">En oock u deught <rhyme label="c" type="f">vertellen</rhyme>,</l>
        <l id="s13:l5" met="3" type="-+">En my niet meer <rhyme label="c" type="f" corresp="#s13:l4">versellen</rhyme>,</l>
        <l id="s13:l6" met="3" type="-+">Met de verachters <rhyme label="b" type="m" corresp="#s13:l3">dijn</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

    <melody>Ik ben niet als een pluim</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Heer’ ick mach wel <rhyme label="a" type="f">klaghen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">En schreyen dach en <rhyme label="b" type="m">nacht</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Dat ick soo all’ mijn <rhyme label="a" type="f" corresp="#s1:l1">daghen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">O Heer’ v heb <rhyme label="b" type="m" corresp="#s1:l2">veracht</rhyme>:</l>
        <l id="s1:l5" met="4" type="+-">Och hadd’ ick dit wel <rhyme label="b" type="m" corresp="#s1:l2">bedacht</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">En van sonden my <rhyme label="b" type="m" corresp="#s1:l2">ghewacht</rhyme>:</l>
        <l id="s1:l7" met="3" type="-+">Want groot is uwe <rhyme label="b" type="m" corresp="#s1:l2">macht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">V dienaer wilt <rhyme label="a" type="f">ontfermen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Die hem soo heeft <rhyme label="b" type="m">ontgaen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Aenhoort sijn bitter <rhyme label="a" type="f" corresp="#s2:l1">kermen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Hy roept v Vader <rhyme label="b" type="m" corresp="#s2:l2">aen</rhyme>:</l>
        <l id="s2:l5" met="4" type="+-">Met den armen <rhyme label="b" type="m" corresp="#s2:l2">Publicaen</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Voor sijn borst soo komt hy <rhyme label="b" type="m" corresp="#s2:l2">slaen</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Wilt hem als kindt <rhyme label="b" type="m" corresp="#s2:l2">ontfaen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">O Heere van hier <rhyme label="a" type="f">bouen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Wilt mijns ghenadich <rhyme label="b" type="m">zijn</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Ick sal v altijts <rhyme label="a" type="f" corresp="#s3:l1">louen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Weert my dat helsch <rhyme label="b" type="m" corresp="#s3:l2">fenijn</rhyme>:</l>
        <l id="s3:l5" met="4" type="+-">Daer en is gheen meerder <rhyme label="b" type="m" corresp="#s3:l2">pijn</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Dan te deruen v <rhyme label="b" type="m" corresp="#s3:l2">aenschijn</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">O hemelsch’ <rhyme label="b" type="m" corresp="#s3:l2">Medecijn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">O Heer’ als ick sal <rhyme label="a" type="f">steruen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En zijn in grooten <rhyme label="b" type="m">noot</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">En wilt my niet <rhyme label="a" type="f" corresp="#s4:l1">bederuen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Al zijn mijn sonden <rhyme label="b" type="m" corresp="#s4:l2">groot</rhyme>:</l>
        <l id="s4:l5" met="4" type="+-">Laet my doch door v bloet <rhyme label="b" type="m" corresp="#s4:l2">root</rhyme></l>
        <l id="s4:l6" met="4" type="+-">(Al ben ick van deuchden <rhyme label="b" type="m" corresp="#s4:l2">bloot</rhyme>)</l>
        <l id="s4:l7" met="3" type="-+">Ontgaen de tweede <rhyme label="b" type="m" corresp="#s4:l2">doot</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Wilt my v graci’ <rhyme label="a" type="f">gheuen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">En maeckt my dus <rhyme label="b" type="m">ydoon</rhyme></l>
        <l id="s5:l3" met="3" type="-+">T’ontfanghen in mijn <rhyme label="a" type="f" corresp="#s5:l1">leuen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Al die Pardoenen <rhyme label="b" type="m" corresp="#s5:l2">schoon</rhyme>:</l>
        <l id="s5:l5" met="4" type="+-">Om te krijghen goeden <rhyme label="b" type="m" corresp="#s5:l2">loon</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">En hooren den schoonen <rhyme label="b" type="m" corresp="#s5:l2">thoon</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Komt bruyt ontfanght de <rhyme label="b" type="m" corresp="#s5:l2">kroon</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">O Iesu hooch <rhyme label="a" type="f">gheboren</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Ghy zijt <rhyme label="b" type="m">ghebenedijt</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">En laetse niet <rhyme label="a" type="f" corresp="#s6:l1">verloren</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Noch heel <rhyme label="b" type="m" corresp="#s6:l2">vermaledijt</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Die in’t Vagheviers <rhyme label="b" type="m" corresp="#s6:l2">ghekrijt</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Suyueren nu haer <rhyme label="b" type="m" corresp="#s6:l2">habijt</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Om’t eeuwich schoon <rhyme label="b" type="m" corresp="#s6:l2">iolijt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Ick wil my gaen <rhyme label="a" type="f">begheuen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Tot alle deucht <rhyme label="b" type="m">voorwaer</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Eer ick worde <rhyme label="a" type="f" corresp="#s7:l1">verdreuen</rhyme>:</l>
        <l id="s7:l4" met="3" type="-+">Paulus leert <rhyme label="b" type="m" corresp="#s7:l2">openbaer</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Datter een vier is hier <rhyme label="b" type="m" corresp="#s7:l2">naer</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Het welck maeckt de siele <rhyme label="b" type="m" corresp="#s7:l2">klaer</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">En lost de sonden <rhyme label="b" type="m" corresp="#s7:l2">swaer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Caluin die macht hem <rhyme label="a" type="f">stooren</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Want hy was loos en <rhyme label="b" type="m">fel</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Maer hy en sal’t niet <rhyme label="a" type="f" corresp="#s8:l1">hooren</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Hy is nu inde <rhyme label="b" type="m" corresp="#s8:l2">hel</rhyme>:</l>
        <l id="s8:l5" met="4" type="+-">Daer is hy door Godts <rhyme label="b" type="m" corresp="#s8:l2">beuel</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Blijuen sal daer in’t <rhyme label="b" type="m" corresp="#s8:l2">ghequel</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">‘Tgheloof leert my dat <rhyme label="b" type="m" corresp="#s8:l2">wel</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

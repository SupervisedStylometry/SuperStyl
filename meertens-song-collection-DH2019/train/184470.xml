  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">JEsus, Godd'lyk <rhyme label="a" type="m">Lam</rhyme>!</l>
        <l id="s1:l2" met="3" type="+-">Wien aan 's Kruices <rhyme label="a" type="m" corresp="#s1:l1">stam</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Onze zond' en jammer <rhyme label="b" type="f">griefde</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Eeuwig dank zy uwe <rhyme label="b" type="f" corresp="#s1:l3">Liefde</rhyme>,</l>
        <l id="s1:l5" met="3" type="+-">Die aan 's Kruices <rhyme label="a" type="m" corresp="#s1:l1">stam</rhyme></l>
        <l id="s1:l6" met="3" type="+-">Wierd ons <rhyme label="a" type="m" corresp="#s1:l1">Offerlam</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Uwe <rhyme label="a" type="m">Liefde-gloed</rhyme></l>
        <l id="s2:l2" met="3" type="+-">Sterkt ons moed en <rhyme label="a" type="m" corresp="#s2:l1">bloed</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Als Gy, met <rhyme label="b" type="f">genaade-blikken</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Ons aan uwe borst komt <rhyme label="b" type="f" corresp="#s2:l3">drukken</rhyme>,</l>
        <l id="s2:l5" met="3" type="+-">Maakt ons wel <rhyme label="a" type="m" corresp="#s2:l1">gemoed</rhyme>,</l>
        <l id="s2:l6" met="3" type="+-">Uwe <rhyme label="a" type="m" corresp="#s2:l1">Liefde-gloed</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Waare Mensch en <rhyme label="a" type="m">God</rhyme>,</l>
        <l id="s3:l2" met="3" type="+-">Troost in nood en <rhyme label="a" type="m" corresp="#s3:l1">dood</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Gy zyt darom Mensch <rhyme label="b" type="f">geboren</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Te verlossen 't geen <rhyme label="b" type="f" corresp="#s3:l3">verloren</rhyme>,</l>
        <l id="s3:l5" met="3" type="+-">Door uw bloed en <rhyme label="a" type="m" corresp="#s3:l1">dood</rhyme>,</l>
        <l id="s3:l6" met="3" type="+-">Waare Mensch en <rhyme label="a" type="m" corresp="#s3:l1">God</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">Held uit Davids <rhyme label="a" type="m">Stam</rhyme>,</l>
        <l id="s4:l2" met="3" type="+-">Uwe <rhyme label="a" type="m" corresp="#s4:l1">Liefde-vlam</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Allen kommer van my <rhyme label="b" type="f">weere</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Dat de weereld my niet <rhyme label="b" type="f" corresp="#s4:l3">deere</rhyme>,</l>
        <l id="s4:l5" met="3" type="+-">Schoon zy my is <rhyme label="a" type="m" corresp="#s4:l1">gram</rhyme>,</l>
        <l id="s4:l6" met="3" type="+-">Held uit Davids <rhyme label="a" type="m" corresp="#s4:l1">stam</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="+-">Groote <rhyme label="a" type="m">Vreede-Vorst</rhyme>,</l>
        <l id="s5:l2" met="3" type="+-">Hoe heeft u <rhyme label="a" type="m" corresp="#s5:l1">gedorst</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Naar der Menschen heil en <rhyme label="b" type="f">leeven</rhyme>;</l>
        <l id="s5:l4" met="4" type="+-">Als g' u in den dood <rhyme label="b" type="f" corresp="#s5:l3">gegeven</rhyme>,</l>
        <l id="s5:l5" met="3" type="+-">Als Gy riep: my <rhyme label="a" type="m" corresp="#s5:l1">dorst</rhyme>,</l>
        <l id="s5:l6" met="3" type="+-">Groote <rhyme label="a" type="m" corresp="#s5:l1">Vreede-Vorst</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="+-">Geef dan uwen <rhyme label="a" type="m">vreê</rhyme>,</l>
        <l id="s6:l2" met="3" type="+-">Ons, en allen <rhyme label="a" type="m" corresp="#s6:l1">meê</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Die U, Heer', als Liefde <rhyme label="b" type="f">kennen</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">En zich tot uw Volk <rhyme label="b" type="f" corresp="#s6:l3">bekennen</rhyme>,</l>
        <l id="s6:l5" met="3" type="+-">Geef die uwen <rhyme label="a" type="m" corresp="#s6:l1">vreê</rhyme>,</l>
        <l id="s6:l6" met="3" type="+-">En ons allen <rhyme label="a" type="m" corresp="#s6:l1">meê</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="+-">Nu dan houd' ik <rhyme label="a" type="m">my</rhyme></l>
        <l id="s7:l2" met="3" type="+-">Eeniglyk aan <rhyme label="a" type="m" corresp="#s7:l1">dy</rhyme>;</l>
        <l id="s7:l3" met="4" type="+-">Nimmermeer zal ik u <rhyme label="b" type="f">laaten</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Maar U in 't Geloof <rhyme label="b" type="f" corresp="#s7:l3">omvaten</rhyme>;</l>
        <l id="s7:l5" met="3" type="+-">In 't geloof aan <rhyme label="a" type="m" corresp="#s7:l1">dy</rhyme></l>
        <l id="s7:l6" met="3" type="+-">Leev' en houd ik <rhyme label="a" type="m" corresp="#s7:l1">my</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="+-">Als ik weenen <rhyme label="a" type="m">moet</rhyme>,</l>
        <l id="s8:l2" met="3" type="+-">Zal uw' <rhyme label="a" type="m" corresp="#s8:l1">traanen-vloed</rhyme></l>
        <l id="s8:l3" met="4" type="+-">Nu de myne ook <rhyme label="b" type="f">geleiden</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">En my tot uw' wonden <rhyme label="b" type="f" corresp="#s8:l3">leiden</rhyme>,</l>
        <l id="s8:l5" met="3" type="+-">Dat myn <rhyme label="a" type="m" corresp="#s8:l1">traanen-vloed</rhyme></l>
        <l id="s8:l6" met="3" type="+-">Zich haast stillen <rhyme label="a" type="m" corresp="#s8:l1">moet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="+-">Als ik my daar <rhyme label="a" type="m">by</rhyme></l>
        <l id="s9:l2" met="3" type="+-">Weederom <rhyme label="a" type="m" corresp="#s9:l1">verbly</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Verblydt Gy u van <rhyme label="b" type="f">gelyke</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Tot ik in uw <rhyme label="b" type="f" corresp="#s9:l3">Koninkryke</rhyme>,</l>
        <l id="s9:l5" met="3" type="+-">Aller traanen <rhyme label="a" type="m" corresp="#s9:l1">vry</rhyme>,</l>
        <l id="s9:l6" met="3" type="+-">My met U <rhyme label="a" type="m" corresp="#s9:l1">verbly</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="+-">Hier door spot en <rhyme label="a" type="m">hoon</rhyme>,</l>
        <l id="s10:l2" met="3" type="+-">Daar de <rhyme label="a" type="m" corresp="#s10:l1">Eere-kroon</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Hier in hoopen en <rhyme label="b" type="f">gelooven</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">Zien en hebben komt hier <rhyme label="b" type="f" corresp="#s10:l3">booven</rhyme>,</l>
        <l id="s10:l5" met="3" type="+-">Want de <rhyme label="a" type="m" corresp="#s10:l1">Eere-kroon</rhyme>,</l>
        <l id="s10:l6" met="3" type="+-">Volgt op spot en <rhyme label="a" type="m" corresp="#s10:l1">hoon</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="+-">Jesus help dan <rhyme label="a" type="m">my</rhyme>,</l>
        <l id="s11:l2" met="3" type="+-">Dat ik, vry en <rhyme label="a" type="m" corresp="#s11:l1">bly</rhyme>,</l>
        <l id="s11:l3" met="4" type="+-">Alles door U <rhyme label="b" type="f">overwinne</rhyme>,</l>
        <l id="s11:l4" met="4" type="+-">En dat ik altyd <rhyme label="b" type="f" corresp="#s11:l3">bezinne</rhyme>,</l>
        <l id="s11:l5" met="3" type="+-">Hoe in 't lyden <rhyme label="a" type="m" corresp="#s11:l1">Gy</rhyme></l>
        <l id="s11:l6" met="3" type="+-">Overwon voor <rhyme label="a" type="m" corresp="#s11:l1">my</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

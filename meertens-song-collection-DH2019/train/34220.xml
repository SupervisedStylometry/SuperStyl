  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">GHy Jongh-mans die uyt vrijen <rhyme label="a" type="m">gaet</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Wilt u eerst wel <rhyme label="b" type="f">versinnen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">En siet naer goedt, oft hooghen <rhyme label="a" type="m" corresp="#s1:l1">staet</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Wilt uws ghelijck <rhyme label="b" type="f" corresp="#s1:l2">beminnen</rhyme>:</l>
        <l id="s1:l5" met="2" type="-+">Maer neemt <rhyme label="c" type="m">ghemerck</rhyme> //</l>
        <l id="s1:l6" met="2" type="-+">op al haer <rhyme label="c" type="m" corresp="#s1:l5">werck</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">En op haer deughdigh <rhyme label="d" type="f">leven</rhyme>,</l>
        <l id="s1:l8" met="2" type="-+">Is sy <rhyme label="e" type="m">ghesondt</rhyme> //</l>
        <l id="s1:l9" met="2" type="-+">en recht van <rhyme label="e" type="m" corresp="#s1:l8">grondt</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">Wilt haer u trouw dan <rhyme label="d" type="f" corresp="#s1:l7">gheven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Want siet ghy naer een rijcke <rhyme label="a" type="m">Maeght</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En mindt haer om haer <rhyme label="b" type="f">schyven</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Soo wordy eeuwighlijck <rhyme label="a" type="m" corresp="#s2:l1">gheplaeght</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Met knorren ende <rhyme label="b" type="f" corresp="#s2:l2">kijven</rhyme>:</l>
        <l id="s2:l5" met="2" type="-+">Trouwe ghy den <rhyme label="c" type="m">sot</rhyme> //</l>
        <l id="s2:l6" met="2" type="-+">alleen om ’t <rhyme label="c" type="m" corresp="#s2:l5">kot</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Ghy zijt qualijck <rhyme label="d" type="f">beraden</rhyme>,</l>
        <l id="s2:l8" met="2" type="-+">Ghy mist het <rhyme label="e" type="m">kot</rhyme> //</l>
        <l id="s2:l9" met="2" type="-+">en houdt den <rhyme label="e" type="m" corresp="#s2:l8">sot</rhyme>,</l>
        <l id="s2:l10" met="3" type="-+">En blijft met hem <rhyme label="d" type="f" corresp="#s2:l7">beladen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Trouwt ghy een Jouffrouw e’el van <rhyme label="a" type="m">staet</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Oft een van Calis <rhyme label="b" type="f">benden</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">’t Is van nood’ dat ghy vroegh en <rhyme label="a" type="m" corresp="#s3:l1">laet</rhyme></l>
        <l id="s3:l4" met="3" type="-+">V winst hanght aen haer <rhyme label="b" type="f" corresp="#s3:l2">lenden</rhyme>:</l>
        <l id="s3:l5" met="2" type="-+">Want al ’t <rhyme label="c" type="m">gheroem</rhyme> //</l>
        <l id="s3:l6" met="2" type="-+">van <rhyme label="c" type="m" corresp="#s3:l5">Edeldom</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Sonder de deught te <rhyme label="d" type="f">minnen</rhyme>,</l>
        <l id="s3:l8" met="2" type="-+">Is als een <rhyme label="e" type="m">vat</rhyme> //</l>
        <l id="s3:l9" met="2" type="-+">van buyten <rhyme label="e" type="m" corresp="#s3:l8">wat</rhyme></l>
        <l id="s3:l10" met="3" type="-+">Vergult, maer yl van <rhyme label="d" type="f" corresp="#s3:l7">binnen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Hebt ghy een dierken schoon en <rhyme label="a" type="m">pril</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Wt Venus hof <rhyme label="b" type="f">ghelesen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Ghy moet toe-sien (spijt uwen <rhyme label="a" type="m" corresp="#s4:l1">wil</rhyme>)</l>
        <l id="s4:l4" met="3" type="-+">Om haer Schildt-wacht te <rhyme label="b" type="f" corresp="#s4:l2">wesen</rhyme>:</l>
        <l id="s4:l5" met="2" type="-+">Daerom <rhyme label="c" type="m">versint</rhyme> //</l>
        <l id="s4:l6" met="2" type="-+">eer ghy <rhyme label="c" type="m" corresp="#s4:l5">begint</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Wilt Godt uw’ saeck <rhyme label="d" type="f">op-geven</rhyme>,</l>
        <l id="s4:l8" met="2" type="-+">Want een schoon <rhyme label="e" type="m">vrouw</rhyme> //</l>
        <l id="s4:l9" met="2" type="-+">al is sy <rhyme label="e" type="m" corresp="#s4:l8">trouw</rhyme>,</l>
        <l id="s4:l10" met="3" type="-+">Verkort een man zijn <rhyme label="d" type="f" corresp="#s4:l7">leven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Oorlof dan Jongh-mans, als ghy <rhyme label="a" type="m">zijt</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Met minne-lust <rhyme label="b" type="f">bevanghen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Siet dat ghy uws ghelijcke <rhyme label="a" type="m" corresp="#s5:l1">vrijdt</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Ghestadigh met <rhyme label="b" type="f" corresp="#s5:l2">verlanghen</rhyme>:</l>
        <l id="s5:l5" met="2" type="-+">Siet oft haer <rhyme label="c" type="m">jeught</rhyme> //</l>
        <l id="s5:l6" met="2" type="-+">is schoon van <rhyme label="c" type="m" corresp="#s5:l5">deught</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">En volherdigh in <rhyme label="d" type="f">trouwe</rhyme>:</l>
        <l id="s5:l8" met="2" type="-+">Want al ’t <rhyme label="e" type="m">cieraedt</rhyme> //</l>
        <l id="s5:l9" met="2" type="-+">van den <rhyme label="e" type="m" corresp="#s5:l8">huys-raedt</rhyme></l>
        <l id="s5:l10" met="3" type="-+">Is een deughtrijcke <rhyme label="d" type="f" corresp="#s5:l7">vrouwe</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Oorlof ghy Dochters rijck van <rhyme label="a" type="m">goedt</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">E’el van stam, schoon van <rhyme label="b" type="f">leden</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Die stoft op rijckdom, vleesch, oft <rhyme label="a" type="m" corresp="#s6:l1">bloedt</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">En spot met Jongh-mans <rhyme label="b" type="f" corresp="#s6:l2">beden</rhyme>.</l>
        <l id="s6:l5" met="2" type="-+">Gaept als ghy <rhyme label="c" type="m">siet</rhyme> //</l>
        <l id="s6:l6" met="2" type="-+">dat men u <rhyme label="c" type="m" corresp="#s6:l5">biedt</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Den lepel: want ’t is <rhyme label="d" type="f">konste</rhyme></l>
        <l id="s6:l8" met="2" type="-+">Te seggen <rhyme label="e" type="m">Jae</rhyme> //</l>
        <l id="s6:l9" met="2" type="-+">in tijdts, daer <rhyme label="e" type="m" corresp="#s6:l8">nae</rhyme></l>
        <l id="s6:l10" met="3" type="-+">Beklaeght ghy d’oude <rhyme label="d" type="f" corresp="#s6:l7">jonste</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

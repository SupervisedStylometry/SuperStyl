  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Heer! wilt ons <rhyme label="a" type="f">ontfermen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Wy zijnen sondaers <rhyme label="b" type="m">snoodt</rhyme>.</l>
        <l id="s1:l3" met="3" type="-+">Christe, wilt ons <rhyme label="a" type="f" corresp="#s1:l1">erbermen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Door uw' pijn, kruys en <rhyme label="b" type="m" corresp="#s1:l2">doodt</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">O Heer! hebt <rhyme label="c" type="f">mede-lijden</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Met ons doch <rhyme label="d" type="m">allegaer</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Wilt ons daer na <rhyme label="c" type="f" corresp="#s1:l5">verblijden</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Met uwe aenschijn <rhyme label="d" type="m" corresp="#s1:l6">klaer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Godt Vader, hoogh <rhyme label="a" type="f">verheven</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Ontfermt u over <rhyme label="b" type="m">ons</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Godts Zoon, door wie, wy <rhyme label="a" type="f" corresp="#s2:l1">leven</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Ontfermt u over <rhyme label="b" type="m" corresp="#s2:l2">ons</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Godt Heyligh Gheest, wilt <rhyme label="c" type="f">toonen</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Dat ghy barmhertigh <rhyme label="d" type="m">zijt</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Een Godt, en drie <rhyme label="c" type="f" corresp="#s2:l5">Perzoonen</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Ontfermt, en ons <rhyme label="d" type="m" corresp="#s2:l6">verblijdt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Gods Moeder Maeght der <rhyme label="a" type="f">Maeghden</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Maria bidt voor <rhyme label="b" type="m">ons</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">O Maeght! die Jesum <rhyme label="a" type="f" corresp="#s3:l1">draeghden</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Maria bidt voor <rhyme label="b" type="m" corresp="#s3:l2">ons</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Sint Ioseph, hoogh van <rhyme label="c" type="f">fame</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Sint Ioseph bidt voor <rhyme label="d" type="m">ons</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Noemer van Iesus <rhyme label="c" type="f" corresp="#s3:l5">Name</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Sint Joseph bidt voor <rhyme label="d" type="m" corresp="#s3:l6">ons</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Lam Goods, die 's werelts <rhyme label="a" type="f">zonden</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Wegh neemt, spaert ons, o <rhyme label="b" type="m">Heer</rhyme>!</l>
        <l id="s4:l3" met="3" type="-+">Lam Goods, die 's wereldts <rhyme label="a" type="f" corresp="#s4:l1">zonden</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Wegh neemt, hoort ons <rhyme label="b" type="m" corresp="#s4:l2">begeer</rhyme>!</l>
        <l id="s4:l5" met="3" type="-+">Lam Goods, die 's wereldts <rhyme label="c" type="f">quaden</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Wegh neemt, ontfermt ons <rhyme label="d" type="m">Heer</rhyme>!</l>
        <l id="s4:l7" met="3" type="-+">Door u wonden <rhyme label="c" type="f" corresp="#s4:l5">genaden</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Toont aen ons meer en <rhyme label="d" type="m" corresp="#s4:l6">meer</rhyme>.</l>
      </lg>
    </lg>
  </text>

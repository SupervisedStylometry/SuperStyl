      <category translation="religion">godsdienst</category>
    </categories>
  <author>Dirck Pietersz Pers</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">GHy zijt door den waen <rhyme label="a" type="f">bedrogen</rhyme>:</l>
        <l id="s1:l2" met="4" type="+-">Dit is 't Saligh leven <rhyme label="b" type="m">niet</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Dat gelijck als sneeuw <rhyme label="b" type="m" corresp="#s1:l2">verschiet</rhyme>:</l>
        <l id="s1:l4" met="4" type="+-">Opgepronckt voor yders <rhyme label="a" type="f" corresp="#s1:l1">oogen</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Lecker, moedigh, trots, vol <rhyme label="c" type="m">pracht</rhyme>:</l>
        <l id="s1:l6" met="4" type="+-">'t Ware leven dit <rhyme label="c" type="m" corresp="#s1:l5">veracht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Of u handen cierlijck <rhyme label="a" type="f">blincken</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">En met edel steenen <rhyme label="b" type="m">stijf</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Waer beperelt 't heele <rhyme label="b" type="m" corresp="#s2:l2">lijf</rhyme>:</l>
        <l id="s2:l4" met="4" type="+-">Die als Sterren staen en <rhyme label="a" type="f" corresp="#s2:l1">pincken</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Dat u wel verwaent <rhyme label="c" type="m">toe-lacht</rhyme>:</l>
        <l id="s2:l6" met="4" type="+-">'t Ware leven dit <rhyme label="c" type="m" corresp="#s2:l5">veracht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Om te rusten op de <rhyme label="a" type="f">pluymen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Met Gordynen van <rhyme label="b" type="m">Damast</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Vorstelijck daer om <rhyme label="b" type="m" corresp="#s3:l2">gepast</rhyme>:</l>
        <l id="s3:l4" met="4" type="+-">Op 't verhemelt bedd' te <rhyme label="a" type="f" corresp="#s3:l1">sluymen</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Hoe verweent en oock hoe <rhyme label="c" type="m">sacht</rhyme>:</l>
        <l id="s3:l6" met="4" type="+-">'t Ware leven dit <rhyme label="c" type="m" corresp="#s3:l5">veracht</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">In de Princelijcke <rhyme label="a" type="f">zalen</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Zijn met Purper <rhyme label="b" type="m">aen-gedaen</rhyme>:</l>
        <l id="s4:l3" met="4" type="+-">Dreuts en prat daer heen te <rhyme label="b" type="m" corresp="#s4:l2">gaen</rhyme>:</l>
        <l id="s4:l4" met="4" type="+-">Drincken uyt vergulde <rhyme label="a" type="f" corresp="#s4:l1">schalen</rhyme>:</l>
        <l id="s4:l5" met="4" type="+-">Veel te pocchen van 't <rhyme label="c" type="m">geslacht</rhyme>:</l>
        <l id="s4:l6" met="4" type="+-">'t Ware leven dit <rhyme label="c" type="m" corresp="#s4:l5">veracht</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Of u Disch zy <rhyme label="a" type="f">over-laden</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Met een Koninghlijck <rhyme label="b" type="m">bancket</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">En met Harpeniers <rhyme label="b" type="m" corresp="#s5:l2">beset</rhyme>:</l>
        <l id="s5:l4" met="4" type="+-">Wat sou u doch mogen <rhyme label="a" type="f" corresp="#s5:l1">staden</rhyme></l>
        <l id="s5:l5" met="4" type="+-">Al het Graen en Cyri <rhyme label="c" type="m">macht</rhyme>?</l>
        <l id="s5:l6" met="4" type="+-">'t Ware leven dit <rhyme label="c" type="m" corresp="#s5:l5">veracht</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">‘Saligh is hy en <rhyme label="a" type="f">gepresen</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Die op niemands gunste <rhyme label="b" type="m">past</rhyme>:</l>
        <l id="s6:l3" met="4" type="+-">Noch der Krijgers Swaerd <rhyme label="b" type="m" corresp="#s6:l2">verrast</rhyme>:</l>
        <l id="s6:l4" met="4" type="+-">Maer met maet vernoeght kan <rhyme label="a" type="f" corresp="#s6:l1">wesen</rhyme>:</l>
        <l id="s6:l5" met="4" type="+-">Sulck een Man is waerd <rhyme label="c" type="m">begaeft</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Dat hy door de Wolcken <rhyme label="c" type="m" corresp="#s6:l5">draeft</rhyme>.’</l>
      </lg>
    </lg>
  </text>
</song>

      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Ierusalem ghy schoone <rhyme label="a" type="m">stadt</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Hoe staet ghy bruyt in mijn <rhyme label="b" type="f">behagen</rhyme>!</l>
        <l id="s1:l3" met="4" type="-+">Mijn ooghen maeckt ghy dick soo <rhyme label="a" type="m" corresp="#s1:l1">nat</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Mijn herte doet ghy naer u <rhyme label="b" type="f" corresp="#s1:l2">jagen</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Mijn ooghen maeckt ghy dick soo <rhyme label="a" type="m" corresp="#s1:l1">nat</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Mijn herte doet ghy naer u <rhyme label="b" type="f" corresp="#s1:l2">jagen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Want boven alle schoonheydt <rhyme label="a" type="m">schoon</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Sijt ghy van buyten en van <rhyme label="b" type="f">binnen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Soo dat tot uwen lof <rhyme label="a" type="m" corresp="#s2:l1">ydoon</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Noch menschen sijn, noch <rhyme label="b" type="f" corresp="#s2:l2">Seraphinnen</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">Soo dat tot uwen lof <rhyme label="a" type="m" corresp="#s2:l1">ydoon</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Noch menschen sijn, noch <rhyme label="b" type="f" corresp="#s2:l2">Seraphinnen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">O gulde Son, o silver <rhyme label="a" type="m">Maen</rhyme>!</l>
        <l id="s3:l2" met="4" type="-+">O sterr’kens blinckend’ als <rhyme label="b" type="f">Robijnen</rhyme>!</l>
        <l id="s3:l3" met="4" type="-+">Maer die daer binnen eens mocht <rhyme label="a" type="m" corresp="#s3:l1">gaen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Duyst Sonnen soud’hy vinden <rhyme label="b" type="f" corresp="#s3:l2">schijnen</rhyme>.</l>
        <l id="s3:l5" met="4" type="-+">Maer die daer binnen eens mocht <rhyme label="a" type="m" corresp="#s3:l1">gaen</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Duyst Sonnen soud’hy vinden <rhyme label="b" type="f" corresp="#s3:l2">schijnen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Schoon Vader-landt, schoon <rhyme label="a" type="m">Vader-lant</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Godts aller triumphansten <rhyme label="b" type="f">throone</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">In u is rijckdom <rhyme label="a" type="m" corresp="#s4:l1">abondant</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">O salich die u krijcht ten <rhyme label="b" type="f" corresp="#s4:l2">loone</rhyme>.</l>
        <l id="s4:l5" met="4" type="-+">In u is rijckdom <rhyme label="a" type="m" corresp="#s4:l1">abondant</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">O salich die u krijcht ten <rhyme label="b" type="f" corresp="#s4:l2">loone</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">V mueren sijn van goude <rhyme label="a" type="m">fijn</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Bestroyt met peerlen, sijn u <rhyme label="b" type="f">straten</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">In u en is gheen Sonne <rhyme label="a" type="m" corresp="#s5:l1">schijn</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Want ghy schijnt selver boven <rhyme label="b" type="f" corresp="#s5:l2">maten</rhyme>.</l>
        <l id="s5:l5" met="4" type="-+">In u en is gheen Sonne <rhyme label="a" type="m" corresp="#s5:l1">schijn</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Want ghy schijnt selver boven <rhyme label="b" type="f" corresp="#s5:l2">maten</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Hoe schoon blinckt daer den <rhyme label="a" type="m">diamant</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Hoe soetkens lachen de <rhyme label="b" type="f">Saphieren</rhyme>!</l>
        <l id="s6:l3" met="4" type="-+">Oock den Karbonckel <rhyme label="a" type="m" corresp="#s6:l1">triumphant</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Geeft licht in duysentich <rhyme label="b" type="f" corresp="#s6:l2">manieren</rhyme>.</l>
        <l id="s6:l5" met="4" type="-+">Oock den Karbonckel <rhyme label="a" type="m" corresp="#s6:l1">triumphant</rhyme></l>
        <l id="s6:l6" met="4" type="-+">Geeft licht in duysentich <rhyme label="b" type="f" corresp="#s6:l2">manieren</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Tapijtery en isser <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Dit sijn Hierusalems <rhyme label="b" type="f">tapijten</rhyme>:</l>
        <l id="s7:l3" met="4" type="-+">De motten doense gheen <rhyme label="a" type="m" corresp="#s7:l1">verdriet</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Den tijdt en kanse oock niet <rhyme label="b" type="f" corresp="#s7:l2">slijten</rhyme>.</l>
        <l id="s7:l5" met="4" type="-+">De motten doense gheen <rhyme label="a" type="m" corresp="#s7:l1">verdriet</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Den tijdt en kanse oock niet <rhyme label="b" type="f" corresp="#s7:l2">slijten</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Och schoon Sion mijn liefste <rhyme label="a" type="m">lief</rhyme>!</l>
        <l id="s8:l2" met="4" type="-+">Ghy hebt berooft alle mijn <rhyme label="b" type="f">sinnen</rhyme>:</l>
        <l id="s8:l3" met="4" type="-+">Met desen roos doet my <rhyme label="a" type="m" corresp="#s8:l1">gerief</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Nu sal ick u alleen <rhyme label="b" type="f" corresp="#s8:l2">beminnen</rhyme>.</l>
        <l id="s8:l5" met="4" type="-+">Met desen roos doet my <rhyme label="a" type="m" corresp="#s8:l1">gerief</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Nu sal ick u alleen <rhyme label="b" type="f" corresp="#s8:l2">beminnen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Dus roept mijn siel’, o Heer’ <rhyme label="a" type="m">wanneer</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">O wanneer sal ick van hier <rhyme label="b" type="f">scheyden</rhyme>!</l>
        <l id="s9:l3" met="4" type="-+">Naer u so haeck ick even <rhyme label="a" type="m" corresp="#s9:l1">seer</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Al wilt het vleesch my neerwaerts <rhyme label="b" type="f" corresp="#s9:l2">leyden</rhyme>.</l>
        <l id="s9:l5" met="4" type="-+">Naer u so haeck ick even <rhyme label="a" type="m" corresp="#s9:l1">seer</rhyme></l>
        <l id="s9:l6" met="4" type="-+">Al wilt het vleesch my neerwaerts <rhyme label="b" type="f" corresp="#s9:l2">leyden</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Ick ben hier in het tranen <rhyme label="a" type="m">dal</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Den hogen Thabor is daer <rhyme label="b" type="f">boven</rhyme>:</l>
        <l id="s10:l3" met="4" type="-+">Och laet my met u vrienden <rhyme label="a" type="m" corresp="#s10:l1">al</rhyme></l>
        <l id="s10:l4" met="4" type="-+">V Majesteyt eens salich <rhyme label="b" type="f" corresp="#s10:l2">loven</rhyme>.</l>
        <l id="s10:l5" met="4" type="-+">Och laet my met u vrienden <rhyme label="a" type="m" corresp="#s10:l1">al</rhyme></l>
        <l id="s10:l6" met="4" type="-+">V Majesteyt eens salich <rhyme label="b" type="f" corresp="#s10:l2">loven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

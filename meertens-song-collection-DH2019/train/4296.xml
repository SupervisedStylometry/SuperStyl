    <melody>Minzaam beeldje amoureus</melody>
    <categories>
      <category translation="formal genres">formele genres</category>
      <category translation="love and sex">liefde en seks</category>
      <category translation="emotions">emoties</category>
    </categories>
  <author>Pieter Lenaerts van der Goes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">MAeghden blomme, suyver <rhyme label="a" type="m">parceel</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">Die v verheuen // <rhyme label="b" type="m">stelt</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">De hooft-somme // gans, en <rhyme label="a" type="m" corresp="#s1:l1">geheel</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">Sydy, daer leuen // <rhyme label="b" type="m" corresp="#s1:l2">gelt</rhyme>:</l>
        <l id="s1:l5" met="3" type="+-">My quelt // t'gewelt // der <rhyme label="c" type="f">sinnen</rhyme>,</l>
        <l id="s1:l6" met="3" type="+-">Van binnen // s'herten <rhyme label="d" type="m">gront</rhyme>,</l>
        <l id="s1:l7" met="1" type="-+">Want <rhyme label="e" type="f">geene</rhyme></l>
        <l id="s1:l8" met="1" type="-+">Soo <rhyme label="e" type="f" corresp="#s1:l7">reene</rhyme>,</l>
        <l id="s1:l9" met="2" type="-+">Alleene, ghy <rhyme label="d" type="m" corresp="#s1:l6">cont</rhyme></l>
        <l id="s1:l10" met="1" type="-+">
          <rhyme label="f" type="f">Doleuren</rhyme>
        </l>
        <l id="s1:l11" met="1" type="-+">Doen <rhyme label="f" type="f" corresp="#s1:l10">scheuren</rhyme>,</l>
        <l id="s1:l12" met="2" type="-+">Voor treuren // <rhyme label="d" type="m" corresp="#s1:l6">terstont</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Al dijn vroetheyt // <rhyme label="a" type="m">goddinnelick</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">Soo hemelsch af <rhyme label="b" type="m">gemaelt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Is een soetheyt // gans <rhyme label="a" type="m" corresp="#s2:l1">minnelick</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">Te vollen noyt <rhyme label="b" type="m" corresp="#s2:l2">verhaelt</rhyme>,</l>
        <l id="s2:l5" met="3" type="+-">My daelt // en straelt // ter <rhyme label="c" type="f">herten</rhyme></l>
        <l id="s2:l6" met="3" type="+-">Veel smert // en // <rhyme label="d" type="m">ongeval</rhyme>,</l>
        <l id="s2:l7" met="1" type="-+"><rhyme label="e" type="f">Achermen</rhyme>!</l>
        <l id="s2:l8" met="1" type="-+">Mijn <rhyme label="e" type="f" corresp="#s2:l7">kermen</rhyme></l>
        <l id="s2:l9" met="2" type="-+">Ontfermen // wilt <rhyme label="d" type="m" corresp="#s2:l6">al</rhyme>,</l>
        <l id="s2:l10" met="1" type="-+">Of <rhyme label="f" type="f">sterven</rhyme>,</l>
        <l id="s2:l11" met="1" type="-+"><rhyme label="f" type="f" corresp="#s2:l10">Bederuen</rhyme>,</l>
        <l id="s2:l12" met="2" type="-+">Duyst-werven // ick <rhyme label="d" type="m" corresp="#s2:l6">sal</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Rancxken aerdich // moet noot // en // <rhyme label="a" type="m">recht</rhyme>,</l>
        <l id="s3:l2" met="3" type="+-">Doch soet van aerde // <rhyme label="b" type="m">zijt</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">My (onweerdich verstooten // <rhyme label="a" type="m" corresp="#s3:l1">knecht</rhyme>)</l>
        <l id="s3:l4" met="3" type="+-">Een sauegaerde // <rhyme label="b" type="m" corresp="#s3:l2">zijt</rhyme>:</l>
        <l id="s3:l5" met="3" type="+-">Naer strijt // sendt tijt // van <rhyme label="c" type="f">vreden</rhyme>,</l>
        <l id="s3:l6" met="3" type="+-">Zijt heden // in mijn <rhyme label="d" type="m">cruys</rhyme></l>
        <l id="s3:l7" met="1" type="-+">Soet- // <rhyme label="e" type="f">mondich</rhyme>,</l>
        <l id="s3:l8" met="1" type="-+">Goet- // <rhyme label="e" type="f" corresp="#s3:l7">grondich</rhyme>,</l>
        <l id="s3:l9" met="2" type="-+">T'bloet- // hondich // <rhyme label="d" type="m" corresp="#s3:l6">gespuys</rhyme>,</l>
        <l id="s3:l10" met="1" type="-+">Laet <rhyme label="f" type="f">drijuen</rhyme>,</l>
        <l id="s3:l11" met="1" type="-+">Zijn <rhyme label="f" type="f" corresp="#s3:l10">blijuen</rhyme>,</l>
        <l id="s3:l12" met="2" type="-+">Catijuen // <rhyme label="d" type="m" corresp="#s3:l6">confuys</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Int versuchten // naer troost // en // <rhyme label="a" type="m">raet</rhyme>,</l>
        <l id="s4:l2" met="3" type="+-">Ligh ick gans kercker // <rhyme label="b" type="m">vast</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Nu mijn duchten // ten boosten // <rhyme label="a" type="m" corresp="#s4:l1">gaet</rhyme>,</l>
        <l id="s4:l4" met="3" type="+-">Den brant noch stercker // <rhyme label="b" type="m" corresp="#s4:l2">wast</rhyme>,</l>
        <l id="s4:l5" met="3" type="+-">Dien last // deurtast // my <rhyme label="c" type="f">schandich</rhyme>,</l>
        <l id="s4:l6" met="3" type="+-">Vyandich // met veel <rhyme label="d" type="m">grief</rhyme>:</l>
        <l id="s4:l7" met="1" type="-+">O <rhyme label="e" type="f">rare</rhyme>,</l>
        <l id="s4:l8" met="1" type="-+"><rhyme label="e" type="f" corresp="#s4:l7">Troostbare</rhyme>,</l>
        <l id="s4:l9" met="2" type="-+">Int sware // <rhyme label="d" type="m" corresp="#s4:l6">miskies</rhyme>,</l>
        <l id="s4:l10" met="1" type="-+">Van <rhyme label="f" type="f">desen</rhyme>,</l>
        <l id="s4:l11" met="1" type="-+">Wilt <rhyme label="f" type="f" corresp="#s4:l10">wesen</rhyme>,</l>
        <l id="s4:l12" met="2" type="-+">T'genesen // schoon <rhyme label="d" type="m" corresp="#s4:l6">lief</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Als idoone // Princesse // <rhyme label="a" type="m">my</rhyme></l>
        <l id="s5:l2" met="3" type="+-">Int laetste <rhyme label="b" type="m">secoureert</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">O mijn schoone // Deesse // <rhyme label="a" type="m" corresp="#s5:l1">vry</rhyme>,</l>
        <l id="s5:l4" met="3" type="+-">Mijn hulpe <rhyme label="b" type="m" corresp="#s5:l2">mainteneert</rhyme>:</l>
        <l id="s5:l5" met="3" type="+-">Cesseert // geleert // <rhyme label="c" type="f">verstandich</rhyme></l>
        <l id="s5:l6" met="3" type="+-">Mijn brandich // lijden <rhyme label="d" type="m">straf</rhyme>:</l>
        <l id="s5:l7" met="1" type="-+">Of! <rhyme label="e" type="f">sonder</rhyme>,</l>
        <l id="s5:l8" met="1" type="-+">Groot <rhyme label="e" type="f" corresp="#s5:l7">wonder</rhyme>,</l>
        <l id="s5:l9" met="2" type="-+">Ick onder // int <rhyme label="d" type="m" corresp="#s5:l6">graf</rhyme></l>
        <l id="s5:l10" met="1" type="-+">Moet <rhyme label="f" type="f">dalen</rhyme>:</l>
        <l id="s5:l11" met="1" type="-+">En <rhyme label="f" type="f" corresp="#s5:l10">halen</rhyme>,</l>
        <l id="s5:l12" met="2" type="-+">T'betalen // hier <rhyme label="d" type="m" corresp="#s5:l6">af</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

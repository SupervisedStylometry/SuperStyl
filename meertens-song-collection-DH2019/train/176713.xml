  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Trechte hooren zy <rhyme label="a" type="f">gepresen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Boven het <rhyme label="b" type="m">Amsterdam</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Want dat vryelijck mach <rhyme label="a" type="f" corresp="#s1:l1">wesen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Hout, Steen, of watmer <rhyme label="b" type="m" corresp="#s1:l2">toenam</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Van die tijtlijcke <rhyme label="c" type="f">goeden</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Die alle vergaen <rhyme label="d" type="m">ghelijck</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Maer dit sterckt die <rhyme label="c" type="f" corresp="#s1:l5">ghemoeden</rhyme></l>
        <l id="s1:l8" met="3" type="-+">En ‘t gaet die mensche <rhyme label="c" type="f" corresp="#s1:l5">voeden</rhyme></l>
        <l id="s1:l9" met="3" type="-+">Inwendigh tot Gods <rhyme label="d" type="m" corresp="#s1:l6">Rijck</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Koemt nu van Rijcke <rhyme label="a" type="f">daghen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Ghezontheyt, schoonheyt, <rhyme label="b" type="m">kracht</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Iae wat Ooghen <rhyme label="a" type="f" corresp="#s2:l1">behaghen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Gout, Silver, konstigh <rhyme label="b" type="m" corresp="#s2:l2">ghewracht</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Steden, Kasteelen, <rhyme label="c" type="f">Tooren</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">‘t Vergaet al met <rhyme label="d" type="m">verdriet</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Maer door het rechte <rhyme label="c" type="f" corresp="#s2:l5">hooren</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Wort men Gods <rhyme label="c" type="f" corresp="#s2:l5">uyt-verkooren</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Dit Schat verandert <rhyme label="d" type="m" corresp="#s2:l6">niet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Eeuwigh Zaligh te <rhyme label="a" type="f">wesen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Godt te behaghen <rhyme label="b" type="m">ghewis</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Onmoghelijck wy <rhyme label="a" type="f" corresp="#s3:l1">lesen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Zonder gheloof het <rhyme label="b" type="m" corresp="#s3:l2">is</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Gheloof betracht al <rhyme label="c" type="f">vooren</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Is die middel <rhyme label="d" type="m">allien</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">‘t Welck niemandt kan <rhyme label="c" type="f" corresp="#s3:l5">bespooren</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Dan door het rechte <rhyme label="c" type="f" corresp="#s3:l5">hooren</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Leestet Romeynen <rhyme label="d" type="m" corresp="#s3:l6">tien</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Clachtigh zijnse <rhyme label="a" type="f">versmeeten</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Die dit ghetuyghen <rhyme label="b" type="m">klaer</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Moses en die <rhyme label="a" type="f" corresp="#s4:l1">Propheeten</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Die Apostelen <rhyme label="b" type="m" corresp="#s4:l2">allegaer</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Met elck ghelijck <rhyme label="c" type="f">ghesinde</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Die ‘t Rechte hooren <rhyme label="d" type="m">prijst</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Krachtigh men dit <rhyme label="c" type="f" corresp="#s4:l5">bevinde</rhyme></l>
        <l id="s4:l8" met="3" type="-+">By alle Gods <rhyme label="c" type="f" corresp="#s4:l5">beminde</rhyme></l>
        <l id="s4:l9" met="3" type="-+">So die Schriftuyr <rhyme label="d" type="m" corresp="#s4:l6">uyt-wijst</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Hoort neerstigh met <rhyme label="a" type="f">verbeyden</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Wilt met een Sela <rhyme label="b" type="m">sien</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Op elck ghetuyght <rhyme label="a" type="f" corresp="#s5:l1">verscheyden</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Exodus <rhyme label="b" type="m" corresp="#s5:l2">neghenthien</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Wilt ghy mijn stemme <rhyme label="c" type="f">hooren</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Vast vaten mijn <rhyme label="d" type="m">verbont</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Ghy sult zijn nae ‘t <rhyme label="c" type="f" corresp="#s5:l5">behooren</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Voor alle Volck <rhyme label="c" type="f" corresp="#s5:l5">verkooren</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">Dit doet ons Moses <rhyme label="d" type="m" corresp="#s5:l6">kont</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Tuyght Esaias <rhyme label="a" type="f">eene</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Indien ghy hooren <rhyme label="b" type="m">wilt</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Des Lants goeden <rhyme label="a" type="f" corresp="#s6:l1">ghemeene</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Sult ghy ghenieten <rhyme label="b" type="m" corresp="#s6:l2">mildt</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Maer weyghert ghy <rhyme label="c" type="f">verkeerde</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Niet ghehoorsaem <rhyme label="d" type="m">terstont</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Suldy zijn als <rhyme label="c" type="f" corresp="#s6:l5">onteerde</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Ghe-eten van den <rhyme label="c" type="f" corresp="#s6:l5">Sweerde</rhyme>,</l>
        <l id="s6:l9" met="3" type="-+">Dit seyt des Heeren <rhyme label="d" type="m" corresp="#s6:l6">mont</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Een plaets om te <rhyme label="a" type="f">aenmercken</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Is hier van elck <rhyme label="b" type="m">ghestelt</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Hoe wel door al haer <rhyme label="a" type="f" corresp="#s7:l1">wercken</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Die selfde zijn <rhyme label="b" type="m" corresp="#s7:l2">vermelt</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Dat men des Heeren <rhyme label="c" type="f">woorden</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Te rechte hooren <rhyme label="d" type="m">moet</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Ieremias veel <rhyme label="c" type="f" corresp="#s7:l5">oorden</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Hesekiel <rhyme label="c" type="f" corresp="#s7:l5">accoorden</rhyme></l>
        <l id="s7:l9" met="3" type="-+">Met meer Propheten <rhyme label="d" type="m" corresp="#s7:l6">doet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Hoe deese zijn <rhyme label="a" type="f">ghevaren</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Leeft haren <rhyme label="b" type="m">Prophecy</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Met alle Gods <rhyme label="a" type="f" corresp="#s8:l1">Dienaren</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Over welck riep men <rhyme label="b" type="m" corresp="#s8:l2">sy</rhyme>:</l>
        <l id="s8:l5" met="3" type="-+">Als waren sy <rhyme label="c" type="f">verlooren</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Oock Christus alleen <rhyme label="d" type="m">goet</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Selfs onse Heer <rhyme label="c" type="f" corresp="#s8:l5">verkooren</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Leert dat wy rechte <rhyme label="c" type="f" corresp="#s8:l5">hooren</rhyme>,</l>
        <l id="s8:l9" met="3" type="-+">Als men daer oock nae <rhyme label="d" type="m" corresp="#s8:l6">doet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Op ‘t stuck Matheus <rhyme label="a" type="f">seven</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Verhaelt tot dees <rhyme label="b" type="m">termijn</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Staet Lucas elf <rhyme label="a" type="f" corresp="#s9:l1">schreven</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Hoe datse zaligh <rhyme label="b" type="m" corresp="#s9:l2">zijn</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Die hooren en <rhyme label="c" type="f">bewaren</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Des Heeren heyligh <rhyme label="d" type="m">leer</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Die sal hy al <rhyme label="c" type="f" corresp="#s9:l5">vergaren</rhyme></l>
        <l id="s9:l8" met="3" type="-+">En voor sijn Vader <rhyme label="c" type="f" corresp="#s9:l5">verklaren</rhyme>,</l>
        <l id="s9:l9" met="3" type="-+">Gheven voor schande <rhyme label="d" type="m" corresp="#s9:l6">eer</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Oock sesthien doet ons <rhyme label="a" type="f">weten</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Is ‘t dat sy hooren <rhyme label="b" type="m">niet</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Moses en die <rhyme label="a" type="f" corresp="#s10:l1">Propheten</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Oft dan al schoon <rhyme label="b" type="m" corresp="#s10:l2">gheschiet</rhyme></l>
        <l id="s10:l5" met="3" type="-+">Dat yemant tot haer <rhyme label="c" type="f">ginghe</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Van der Doodt op <rhyme label="d" type="m">ghestaen</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Die haer tot boete <rhyme label="c" type="f" corresp="#s10:l5">bringhe</rhyme></l>
        <l id="s10:l8" met="3" type="-+">Of Godt sulx liet <rhyme label="c" type="f" corresp="#s10:l5">ghehinghen</rhyme></l>
        <l id="s10:l9" met="3" type="-+">Sy sullen hem <rhyme label="d" type="m" corresp="#s10:l6">versmaen</rhyme></l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Recht dit verstant wilt <rhyme label="a" type="f">vaten</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Eerste Iohannes <rhyme label="b" type="m">vier</rhyme></l>
        <l id="s11:l3" met="3" type="-+">Wie Godt bekent <rhyme label="a" type="f" corresp="#s11:l1">ghelaten</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Dat hy proeft hert en <rhyme label="b" type="m" corresp="#s11:l2">nier</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Hooren ons, wy van <rhyme label="c" type="f">Gode</rhyme></l>
        <l id="s11:l6" met="3" type="-+">Wie van Godt niet en <rhyme label="d" type="m">is</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">Hooren ons rechte <rhyme label="c" type="f" corresp="#s11:l5">noode</rhyme>,</l>
        <l id="s11:l8" met="3" type="-+">Ofte vroom zijn of <rhyme label="c" type="f" corresp="#s11:l5">snoode</rhyme></l>
        <l id="s11:l9" met="3" type="-+">Wortmen hier aen <rhyme label="d" type="m" corresp="#s11:l6">ghewis</rhyme></l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Eenen sin konnen <rhyme label="a" type="f">wesen</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Apocalipsis <rhyme label="b" type="m">een</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Zaligh zijn al die <rhyme label="a" type="f" corresp="#s12:l1">lesen</rhyme></l>
        <l id="s12:l4" met="3" type="-+">En recht hooren die <rhyme label="b" type="m" corresp="#s12:l2">reen</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">Deur Propheten <rhyme label="c" type="f">even</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Ende houdende <rhyme label="d" type="m">zy</rhyme>:</l>
        <l id="s12:l7" met="3" type="-+">Wat daer is in <rhyme label="c" type="f" corresp="#s12:l5">gheschreven</rhyme>,</l>
        <l id="s12:l8" met="3" type="-+">So voeghende haer <rhyme label="c" type="f" corresp="#s12:l5">leven</rhyme>,</l>
        <l id="s12:l9" met="3" type="-+">Want de tijt is nae <rhyme label="d" type="m" corresp="#s12:l6">by</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Nootwendigh moetmen <rhyme label="a" type="f">spooren</rhyme></l>
        <l id="s13:l2" met="3" type="-+">Hier in groot <rhyme label="b" type="m">onderscheyt</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Want Adams weder <rhyme label="a" type="f" corresp="#s13:l1">hooren</rhyme></l>
        <l id="s13:l4" met="3" type="-+">Heeft ons ghebracht groot <rhyme label="b" type="m" corresp="#s13:l2">leyt</rhyme>,</l>
        <l id="s13:l5" met="3" type="-+">Dit gaet ons Paulus <rhyme label="c" type="f">wijsen</rhyme>,</l>
        <l id="s13:l6" met="3" type="-+">Te zijn als noch <rhyme label="d" type="m">present</rhyme>,</l>
        <l id="s13:l7" met="3" type="-+">Dus moetment rechte <rhyme label="c" type="f" corresp="#s13:l5">prijsen</rhyme></l>
        <l id="s13:l8" met="3" type="-+">Van ‘t onrechte <rhyme label="c" type="f" corresp="#s13:l5">afgrijsen</rhyme>,</l>
        <l id="s13:l9" met="3" type="-+">Ons liedt is nae by ‘t <rhyme label="d" type="m" corresp="#s13:l6">endt</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Sy die by ‘t hooren <rhyme label="a" type="f">verlaten</rhyme></l>
        <l id="s14:l2" met="3" type="-+">Van Godes heylich <rhyme label="b" type="m">woort</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Hebreen drie wilt <rhyme label="a" type="f" corresp="#s14:l1">vaten</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">En thien met een <rhyme label="b" type="m" corresp="#s14:l2">accoort</rhyme>,</l>
        <l id="s14:l5" met="3" type="-+">Die door bedroch der <rhyme label="c" type="f">zonden</rhyme>,</l>
        <l id="s14:l6" met="3" type="-+">Van Godt werden <rhyme label="d" type="m">versteent</rhyme>,</l>
        <l id="s14:l7" met="3" type="-+">Hooren dan geern <rhyme label="c" type="f" corresp="#s14:l5">vermonden</rhyme></l>
        <l id="s14:l8" met="3" type="-+">Niet dan Godloose <rhyme label="c" type="f" corresp="#s14:l5">vonden</rhyme>,</l>
        <l id="s14:l9" met="3" type="-+">Died elck dan waerheyt <rhyme label="d" type="m" corresp="#s14:l6">meent</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Ghepresen is het rechte <rhyme label="a" type="f">hooren</rhyme>,</l>
        <l id="s15:l2" met="3" type="-+">Ghenesene  //  wort men <rhyme label="b" type="m">daer</rhyme>,</l>
        <l id="s15:l3" met="3" type="-+">Verresen  //  <rhyme label="a" type="f" corresp="#s15:l1">weder-ghebooren</rhyme>,</l>
        <l id="s15:l4" met="3" type="-+">Wy lesen  //  ’t <rhyme label="b" type="m" corresp="#s15:l2">openbaer</rhyme>,</l>
        <l id="s15:l5" met="3" type="-+">Goe maer  //  wort hier <rhyme label="c" type="f">ghedraghen</rhyme>,</l>
        <l id="s15:l6" met="3" type="-+">Behagen  //  latet <rhyme label="d" type="m">elck</rhyme>,</l>
        <l id="s15:l7" met="3" type="-+">Al wiltmer ons om <rhyme label="c" type="f" corresp="#s15:l5">plaghen</rhyme></l>
        <l id="s15:l8" met="3" type="-+">Wy hebbent goet te <rhyme label="c" type="f" corresp="#s15:l5">waghen</rhyme>,</l>
        <l id="s15:l9" met="3" type="-+">Christus dronck selfs dees <rhyme label="d" type="m" corresp="#s15:l6">Kelck</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="3" type="-+">Princelijcke Vorst <rhyme label="a" type="f">verheven</rhyme></l>
        <l id="s16:l2" met="3" type="-+">Vergheven  //  wilt ons <rhyme label="b" type="m">zondt</rhyme></l>
        <l id="s16:l3" met="3" type="-+">Die wy hebben <rhyme label="a" type="f" corresp="#s16:l1">bedreven</rhyme>,</l>
        <l id="s16:l4" met="3" type="-+">Ons leven  //  tot dees <rhyme label="b" type="m" corresp="#s16:l2">stont</rhyme>,</l>
        <l id="s16:l5" met="3" type="-+">U Mont  //  die moet men <rhyme label="c" type="f">hooren</rhyme></l>
        <l id="s16:l6" met="3" type="-+">Met Ooren  //  <rhyme label="d" type="m">ghehoorsaem</rhyme>,</l>
        <l id="s16:l7" met="3" type="-+">Bequaem  //  daer, nae te <rhyme label="c" type="f" corresp="#s16:l5">spooren</rhyme>,</l>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="5" type="-+">Schoonste, liefste, vrindelyckste, <rhyme label="a" type="m">jeucht</rhyme>,</l>
        <l id="s1:l2" met="5" type="-+">Van u wacht ick al myn troost, en <rhyme label="a" type="m" corresp="#s1:l1">vreucht</rhyme>,</l>
        <l id="s1:l3" met="5" type="-+">Herderin', die my myn hert <rhyme label="b" type="m">ontstal</rhyme>,</l>
        <l id="s1:l4" met="5" type="-+">Al myn leef-daegh ick u vieren <rhyme label="b" type="m" corresp="#s1:l3">sal</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="5" type="-+">Noyt sal ander woonen in myn <rhyme label="a" type="m">ziel</rhyme>,</l>
        <l id="s2:l2" met="5" type="-+">Nimmer liever aen myn sy <rhyme label="a" type="m" corresp="#s2:l1">beviel</rhyme>,</l>
        <l id="s2:l3" met="5" type="-+">Al myn vee, ende myn schaepkens <rhyme label="b" type="m">al</rhyme>,</l>
        <l id="s2:l4" met="5" type="-+">Die sullen ghevoedt zyn in u <rhyme label="b" type="m" corresp="#s2:l3">stal</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="5" type="-+">Voor myn liefste die op d'aerde <rhyme label="a" type="m">leeft</rhyme>,</l>
        <l id="s3:l2" met="5" type="-+">Roem ick u, soo ghy my gunste <rhyme label="a" type="m" corresp="#s3:l1">gheeft</rhyme>,</l>
        <l id="s3:l3" met="5" type="-+">Soo u min stantvastigh my <rhyme label="b" type="m">vol-doet</rhyme>,</l>
        <l id="s3:l4" met="5" type="-+">Noyt en sal ick anders zyn als <rhyme label="b" type="m" corresp="#s3:l3">soet</rhyme>.</l>
      </lg>
    </lg>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">HEt Heyligh <rhyme label="a" type="f">sweeren</rhyme></l>
        <l id="s1:l2" met="2" type="-+">By d'Heer der <rhyme label="a" type="f" corresp="#s1:l1">Heeren</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Om tot een eynd van twist te <rhyme label="b" type="f">raecken</rhyme>,</l>
        <l id="s1:l4" met="5" type="-+">In gantsch'lijck onbewijselijcke <rhyme label="b" type="f" corresp="#s1:l3">saecken</rhyme>;</l>
        <l id="s1:l5" met="3" type="-+">Heeft Christus onsen <rhyme label="c" type="m">Heer</rhyme></l>
        <l id="s1:l6" met="3" type="-+">In sijn volmaeckte <rhyme label="c" type="m" corresp="#s1:l5">leer</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Die hy ons gaf wel <rhyme label="c" type="m" corresp="#s1:l5">eer</rhyme></l>
        <l id="s1:l8" met="2" type="-+">Niet willen <rhyme label="b" type="f" corresp="#s1:l3">wraecken</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">2't Is waer, wy <rhyme label="a" type="f">lesen</rhyme></l>
        <l id="s2:l2" met="2" type="-+">Dat hy <rhyme label="a" type="f" corresp="#s2:l1">mipresen</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Heeft d'Eedt ghedaen by aertsche <rhyme label="b" type="f">saecken</rhyme>;</l>
        <l id="s2:l4" met="5" type="-+">Doch niemant mach daer uyt een reghel <rhyme label="b" type="f" corresp="#s2:l3">maecken</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Dat sonder <rhyme label="c" type="m">onderscheydt</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Ons alle eedt <rhyme label="c" type="m" corresp="#s2:l5">ontseydt</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Souw sijn om <rhyme label="c" type="m" corresp="#s2:l5">d'eenigheyt</rhyme></l>
        <l id="s2:l8" met="2" type="-+">Daer door te <rhyme label="b" type="f" corresp="#s2:l3">naecken</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Om te <rhyme label="a" type="f">versetten</rhyme></l>
        <l id="s3:l2" met="2" type="-+">Sijns Vaders <rhyme label="a" type="f" corresp="#s3:l1">Wetten</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Is Christus niet op Aerd <rhyme label="b" type="f">verscheenen</rhyme>.</l>
        <l id="s3:l4" met="5" type="-+">Der seden Wet is niet door hem <rhyme label="b" type="f" corresp="#s3:l3">verdweenen</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Gheleert hy nimmer <rhyme label="c" type="m">heeft</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Het gheene <rhyme label="c" type="m" corresp="#s3:l5">wederstreeft</rhyme></l>
        <l id="s3:l7" met="3" type="-+">De Wetten, die Godt <rhyme label="c" type="m" corresp="#s3:l5">gheeft</rhyme></l>
        <l id="s3:l8" met="2" type="-+">Om 't quaet te <rhyme label="b" type="f" corresp="#s3:l3">speenen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Gods trouw <rhyme label="a" type="f">Dienaren</rhyme></l>
        <l id="s4:l2" met="2" type="-+">Die best <rhyme label="a" type="f" corresp="#s4:l1">verklaren</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Ons konnen 't recht verstant des <rhyme label="b" type="f">Heeren</rhyme>,</l>
        <l id="s4:l4" met="5" type="-+">Als 't noodigh was by God haer Schepper <rhyme label="b" type="f" corresp="#s4:l3">sweeren</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Waer uyt wy dan <rhyme label="c" type="m">verstaen</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Dat d'Eedt by Godt <rhyme label="c" type="m" corresp="#s4:l5">ghedaen</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Niet kan de ziele <rhyme label="c" type="m" corresp="#s4:l5">schaen</rhyme>,</l>
        <l id="s4:l8" met="2" type="-+">Noch heyl <rhyme label="b" type="f" corresp="#s4:l3">afweeren</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Wie gheeft my <rhyme label="a" type="f">reden</rhyme>,</l>
        <l id="s5:l2" met="2" type="-+">Waerom dat <rhyme label="a" type="f" corresp="#s5:l1">heden</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Den Eedt ons meer sou sijn <rhyme label="b" type="f">verboden</rhyme></l>
        <l id="s5:l4" met="5" type="-+">Van Christo, dan die eertijts was den <rhyme label="b" type="f" corresp="#s5:l3">Joden</rhyme>?</l>
        <l id="s5:l5" met="3" type="-+">Sy teghen liefde <rhyme label="c" type="m">niet</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Strijdt, die ons Godt <rhyme label="c" type="m" corresp="#s5:l5">ghebiedt</rhyme>;</l>
        <l id="s5:l7" met="3" type="-+">Sy doet oock gheen <rhyme label="c" type="m" corresp="#s5:l5">verdriet</rhyme>.</l>
        <l id="s5:l8" met="2" type="-+">Den Godt der <rhyme label="b" type="f" corresp="#s5:l3">Goden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Den Eedt niet <rhyme label="a" type="f">deere</rhyme></l>
        <l id="s6:l2" met="2" type="-+">Kan Godt den <rhyme label="a" type="f" corresp="#s6:l1">Heere</rhyme>;</l>
        <l id="s6:l3" met="4" type="-+">Veel eerder dient die om te <rhyme label="b" type="f">toonen</rhyme></l>
        <l id="s6:l4" met="5" type="-+">Gods eyghenschap waer door hy 't goet wil <rhyme label="b" type="f" corresp="#s6:l3">loonen</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Dat hy oock herten <rhyme label="c" type="m">siet</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">En van hem recht <rhyme label="c" type="m" corresp="#s6:l5">gheschiet</rhyme>.</l>
        <l id="s6:l7" met="3" type="-+">Die valsch'lijck sweert, sal <rhyme label="c" type="m" corresp="#s6:l5">niet</rhyme></l>
        <l id="s6:l8" met="2" type="-+">De Heer <rhyme label="b" type="f" corresp="#s6:l3">verschoonen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="2" type="-+">Het waer te <rhyme label="a" type="f">wenschen</rhyme></l>
        <l id="s7:l2" met="2" type="-+">Dat alle <rhyme label="a" type="f" corresp="#s7:l1">menschen</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Soo trouw in hare woorden <rhyme label="b" type="f">waren</rhyme></l>
        <l id="s7:l4" met="5" type="-+">Dat het onnodigh was te <rhyme label="b" type="f" corresp="#s7:l3">openbaren</rhyme></l>
        <l id="s7:l5" met="3" type="-+">De waerheydt door een <rhyme label="c" type="m">Eedt</rhyme>;</l>
        <l id="s7:l6" met="3" type="-+">Doch numen trouw <rhyme label="c" type="m" corresp="#s7:l5">vergheet</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Men vaeck moet 't gheenmen <rhyme label="c" type="m" corresp="#s7:l5">weet</rhyme></l>
        <l id="s7:l8" met="2" type="-+">Door Eedt <rhyme label="b" type="f" corresp="#s7:l3">verklaren</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

    <melody>De nachtegaal die zong een lied</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Albertus Buitendyck</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">DE gaven <rhyme label="a" type="m">al</rhyme></l>
        <l id="s1:l2" met="2" type="-+">Die yemandt <rhyme label="a" type="m" corresp="#s1:l1">sal</rhyme></l>
        <l id="s1:l3" met="2" type="-+">Soecken in <rhyme label="b" type="m">d'Vrouw</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Desen al <rhyme label="c" type="m">zijn</rhyme></l>
        <l id="s1:l5" met="2" type="-+">In <rhyme label="c" type="m" corresp="#s1:l4">Catharijn</rhyme>.</l>
        <l id="s1:l6" met="2" type="-+">De ringh des <rhyme label="b" type="m" corresp="#s1:l3">trouw</rhyme></l>
        <l id="s1:l7" met="4" type="-+">Waerder als Coninghs kroone // Goods <rhyme label="d" type="f">Zoone</rhyme></l>
        <l id="s1:l8" met="2" type="-+">Tot <rhyme label="e" type="m">onderpandt</rhyme></l>
        <l id="s1:l9" met="2" type="-+">Stelt aen haer <rhyme label="e" type="m" corresp="#s1:l8">handt</rhyme>,</l>
        <l id="s1:l10" met="3" type="+-">Om liefde haer te <rhyme label="d" type="f" corresp="#s1:l7">toone</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Godts Bruydt, en <rhyme label="a" type="m">Maeght</rhyme></l>
        <l id="s2:l2" met="2" type="-+">Gaet <rhyme label="a" type="m" corresp="#s2:l1">onvertsaeght</rhyme></l>
        <l id="s2:l3" met="2" type="-+">Na <rhyme label="b" type="m">Maximijn</rhyme>:</l>
        <l id="s2:l4" met="2" type="-+">Dese <rhyme label="c" type="m">Tyran</rhyme></l>
        <l id="s2:l5" met="2" type="-+">Doet Vrouw, en <rhyme label="c" type="m" corresp="#s2:l4">Man</rhyme>;</l>
        <l id="s2:l6" met="2" type="-+">Wie dat maer <rhyme label="b" type="m" corresp="#s2:l3">zijn</rhyme></l>
        <l id="s2:l7" met="4" type="-+">'t Alexandryen node // <rhyme label="d" type="f">geboden</rhyme>:</l>
        <l id="s2:l8" met="2" type="-+">d' Afgoden <rhyme label="e" type="m">eert</rhyme>,</l>
        <l id="s2:l9" met="2" type="-+">Tot Feest u <rhyme label="e" type="m" corresp="#s2:l8">keert</rhyme></l>
        <l id="s2:l10" met="3" type="+-">Ofte ick sal u <rhyme label="d" type="f" corresp="#s2:l7">doode</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Met liefde <rhyme label="a" type="m">sterck</rhyme></l>
        <l id="s3:l2" met="2" type="-+">In Satans <rhyme label="a" type="m" corresp="#s3:l1">Kerck</rhyme></l>
        <l id="s3:l3" met="2" type="-+">De Keyser <rhyme label="b" type="m">vint</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">Met veel <rhyme label="c" type="m">versot</rhyme></l>
        <l id="s3:l5" met="2" type="-+">Eeren <rhyme label="c" type="m" corresp="#s3:l4">d'Afgodt</rhyme></l>
        <l id="s3:l6" met="2" type="-+">Doof, stom, lam <rhyme label="b" type="m" corresp="#s3:l3">blint</rhyme>.</l>
        <l id="s3:l7" met="4" type="-+">Seyt Keyser wilt verlaten // en <rhyme label="d" type="f">haeten</rhyme></l>
        <l id="s3:l8" met="2" type="-+">Dit Satans <rhyme label="e" type="m">spel</rhyme>,</l>
        <l id="s3:l9" met="2" type="-+">Of in de <rhyme label="e" type="m" corresp="#s3:l8">Hel</rhyme>,</l>
        <l id="s3:l10" met="3" type="+-">Ghy leydt uw' <rhyme label="d" type="f" corresp="#s3:l7">ondersaten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">De Keyser <rhyme label="a" type="m">vraeght</rhyme>,</l>
        <l id="s4:l2" met="2" type="-+">Godts Bruyt en <rhyme label="a" type="m" corresp="#s4:l1">Maeght</rhyme></l>
        <l id="s4:l3" met="2" type="-+">In sijn <rhyme label="b" type="m">Palleys</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">Uyt wat <rhyme label="c" type="m">geslacht</rhyme></l>
        <l id="s4:l5" met="2" type="-+">s' Was voort <rhyme label="c" type="m" corresp="#s4:l4">gebracht</rhyme>?</l>
        <l id="s4:l6" met="2" type="-+">Spreeckt op sijn <rhyme label="b" type="m" corresp="#s4:l3">eysch</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Uyt Koninghlijcke goede // en <rhyme label="d" type="f">bloedt</rhyme>.</l>
        <l id="s4:l8" met="2" type="-+">'k Acht 't Werelds <rhyme label="e" type="m">goet</rhyme>,</l>
        <l id="s4:l9" met="2" type="-+">Mijn edel <rhyme label="e" type="m" corresp="#s4:l8">bloet</rhyme>,</l>
        <l id="s4:l10" met="3" type="+-">Als doorens, gal en <rhyme label="d" type="f" corresp="#s4:l7">vloeden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Ick ben <rhyme label="a" type="m">getrout</rhyme>,</l>
        <l id="s5:l2" met="2" type="-+">Met die aent 't <rhyme label="a" type="m" corresp="#s5:l1">hout</rhyme></l>
        <l id="s5:l3" met="2" type="-+">Gestorven <rhyme label="b" type="m">is</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">De'es <rhyme label="c" type="m">Hemels-ringh</rhyme></l>
        <l id="s5:l5" met="2" type="-+">Die ick <rhyme label="c" type="m" corresp="#s5:l4">ontfingh</rhyme>,</l>
        <l id="s5:l6" met="2" type="-+">Toont dit <rhyme label="b" type="m" corresp="#s5:l3">gewis</rhyme>:</l>
        <l id="s5:l7" met="4" type="-+">Ghy ed'le Maeght hy seyden // wilt <rhyme label="d" type="f">scheyden</rhyme></l>
        <l id="s5:l8" met="2" type="-+">Van uwe <rhyme label="e" type="m">seckt</rhyme>,</l>
        <l id="s5:l9" met="2" type="-+">Van ons <rhyme label="e" type="m" corresp="#s5:l8">begeckt</rhyme>:</l>
        <l id="s5:l10" met="3" type="+-">Van wijser laet uw <rhyme label="d" type="f" corresp="#s5:l7">leyden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Hy strackx <rhyme label="a" type="m">ontboot</rhyme></l>
        <l id="s6:l2" met="2" type="-+">Een groote <rhyme label="a" type="m" corresp="#s6:l1">vloot</rhyme></l>
        <l id="s6:l3" met="2" type="-+">Van mannen <rhyme label="b" type="m">wijs</rhyme>,</l>
        <l id="s6:l4" met="2" type="-+">Die tegens <rhyme label="c" type="m">haer</rhyme></l>
        <l id="s6:l5" met="2" type="-+">In 't <rhyme label="c" type="m" corresp="#s6:l4">openbaer</rhyme></l>
        <l id="s6:l6" met="2" type="-+">Om lof en <rhyme label="b" type="m" corresp="#s6:l3">prijs</rhyme></l>
        <l id="s6:l7" met="4" type="-+">Souwen al disputeeren // en <rhyme label="d" type="f">leeren</rhyme>,</l>
        <l id="s6:l8" met="2" type="-+">Dat zy <rhyme label="e" type="m">voortaen</rhyme></l>
        <l id="s6:l9" met="2" type="-+">'t Kruys most <rhyme label="e" type="m" corresp="#s6:l8">versmaen</rhyme>,</l>
        <l id="s6:l10" met="3" type="+-">En de gekruyste <rhyme label="d" type="f" corresp="#s6:l7">Heeren</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="2" type="-+">Van Godt <rhyme label="a" type="m">verlicht</rhyme>,</l>
        <l id="s7:l2" met="2" type="-+">Voor niemant <rhyme label="a" type="m" corresp="#s7:l1">swicht</rhyme>:</l>
        <l id="s7:l3" met="2" type="-+">Soo <rhyme label="b" type="m">disputeert</rhyme></l>
        <l id="s7:l4" met="2" type="-+">Dat zy 't <rhyme label="c" type="m">getal</rhyme>,</l>
        <l id="s7:l5" met="2" type="-+">Van vijftigh <rhyme label="c" type="m" corresp="#s7:l4">al</rhyme></l>
        <l id="s7:l6" met="2" type="-+">Verwint <rhyme label="b" type="m" corresp="#s7:l3">bekeert</rhyme>:</l>
        <l id="s7:l7" met="4" type="-+">Dat sy verwonnen waren // <rhyme label="d" type="f">verklaren</rhyme>,</l>
        <l id="s7:l8" met="2" type="-+">Keyser <rhyme label="e" type="m">vergramt</rhyme></l>
        <l id="s7:l9" met="2" type="-+">Tiert, vloeckt, sweert <rhyme label="e" type="m" corresp="#s7:l8">stampt</rhyme>:</l>
        <l id="s7:l10" met="3" type="+-">Sa! tot Stof brant de'es <rhyme label="d" type="f" corresp="#s7:l7">scharen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="2" type="-+">De'es Maghet <rhyme label="a" type="m">teer</rhyme></l>
        <l id="s8:l2" met="2" type="-+">Tot Godes <rhyme label="a" type="m" corresp="#s8:l1">eer</rhyme></l>
        <l id="s8:l3" met="2" type="-+">Gegeeselt <rhyme label="b" type="m">wort</rhyme></l>
        <l id="s8:l4" met="2" type="-+">Heel ure <rhyme label="c" type="m">twee</rhyme>!</l>
        <l id="s8:l5" met="2" type="-+">Acht pijn, noch <rhyme label="c" type="m" corresp="#s8:l4">wee</rhyme>.</l>
        <l id="s8:l6" met="2" type="-+">Na dat in 't <rhyme label="b" type="m" corresp="#s8:l3">kort</rhyme></l>
        <l id="s8:l7" met="4" type="-+">d' Heer geneest al haer wonden // <rhyme label="d" type="f">gebonden</rhyme></l>
        <l id="s8:l8" met="2" type="-+">Wordt aen een <rhyme label="e" type="m">rat</rhyme>:</l>
        <l id="s8:l9" met="2" type="-+">Een Engel <rhyme label="e" type="m" corresp="#s8:l8">dat</rhyme></l>
        <l id="s8:l10" met="3" type="+-">Haest breeckt, van Godt <rhyme label="d" type="f" corresp="#s8:l7">gesonden</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="2" type="-+">Roept: brandt, en <rhyme label="a" type="m">moort</rhyme></l>
        <l id="s9:l2" met="2" type="-+">Als hy nu <rhyme label="a" type="m" corresp="#s9:l1">hoort</rhyme></l>
        <l id="s9:l3" met="2" type="-+">Dat vast <rhyme label="b" type="m">gelooft</rhyme></l>
        <l id="s9:l4" met="2" type="-+">Sijn eyge <rhyme label="c" type="m">vrouw</rhyme>,</l>
        <l id="s9:l5" met="2" type="-+">En Porphier <rhyme label="c" type="m" corresp="#s9:l4">trouw</rhyme>;</l>
        <l id="s9:l6" met="2" type="-+">Zijn <rhyme label="b" type="m" corresp="#s9:l3">opperhooft</rhyme></l>
        <l id="s9:l7" met="4" type="-+">Met twee hondert Soldaten // die <rhyme label="d" type="f">laten</rhyme></l>
        <l id="s9:l8" met="2" type="-+">Door 't bloedigh <rhyme label="e" type="m">swaerdt</rhyme></l>
        <l id="s9:l9" met="2" type="-+">Haer lijck op <rhyme label="e" type="m" corresp="#s9:l8">d'aerdt</rhyme></l>
        <l id="s9:l10" met="3" type="+-">'t Best ontfanght 's Hemels <rhyme label="d" type="f" corresp="#s9:l7">straten</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="2" type="-+">Uyt Cat'rijns <rhyme label="a" type="m">hooft</rhyme>,</l>
        <l id="s10:l2" met="2" type="-+">Van 't lijf <rhyme label="a" type="m" corresp="#s10:l1">geklooft</rhyme>,</l>
        <l id="s10:l3" met="2" type="-+">Bloedt vloeyt noch <rhyme label="b" type="m">straelt</rhyme>;</l>
        <l id="s10:l4" met="2" type="-+">Maer Melckje <rhyme label="c" type="m">zoet</rhyme>.</l>
        <l id="s10:l5" met="2" type="-+">Haer Bruygom <rhyme label="c" type="m" corresp="#s10:l4">goet</rhyme></l>
        <l id="s10:l6" met="2" type="-+">Haer ziel t' huys <rhyme label="b" type="m" corresp="#s10:l3">haelt</rhyme>.</l>
        <l id="s10:l7" met="4" type="-+">De Engelen hoogh van waerde // <rhyme label="d" type="f">vergaerde</rhyme></l>
        <l id="s10:l8" met="2" type="-+">By 't heyligh <rhyme label="e" type="m">lijck</rhyme>,</l>
        <l id="s10:l9" met="2" type="-+">Brengen 't <rhyme label="e" type="m" corresp="#s10:l8">gelijck</rhyme></l>
        <l id="s10:l10" met="3" type="+-">Op de Sinaische <rhyme label="d" type="f" corresp="#s10:l7">aerde</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="2" type="-+">Die om Godt <rhyme label="a" type="m">lijdt</rhyme></l>
        <l id="s11:l2" met="2" type="-+">De'es korte <rhyme label="a" type="m" corresp="#s11:l1">tijdt</rhyme>,</l>
        <l id="s11:l3" met="2" type="-+">En d' Heer trouw <rhyme label="b" type="m">dient</rhyme>:</l>
        <l id="s11:l4" met="2" type="-+">Godt sal zijn 't <rhyme label="c" type="m">schildt</rhyme>;</l>
        <l id="s11:l5" met="2" type="-+">Zijn gracy <rhyme label="c" type="m" corresp="#s11:l4">mildt</rhyme></l>
        <l id="s11:l6" met="2" type="-+">Geest; en <rhyme label="b" type="m" corresp="#s11:l3">verdient</rhyme>,</l>
        <l id="s11:l7" met="4" type="-+">Rust voor 't hart ziel en sinnen // zal <rhyme label="d" type="f">winnen</rhyme></l>
        <l id="s11:l8" met="2" type="-+">In d' uur des <rhyme label="e" type="m">doodts</rhyme></l>
        <l id="s11:l9" met="2" type="-+">Sal u 't Lam <rhyme label="e" type="m" corresp="#s11:l8">Goodts</rhyme></l>
        <l id="s11:l10" met="3" type="+-">Leyde in d' Hemel <rhyme label="d" type="f" corresp="#s11:l7">binnen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="2" type="-+">Cath'rina <rhyme label="a" type="m">reyn</rhyme>,</l>
        <l id="s12:l2" met="2" type="-+">Krijght groot en <rhyme label="a" type="m" corresp="#s12:l1">kleyn</rhyme></l>
        <l id="s12:l3" met="2" type="-+">Door u <rhyme label="b" type="m">gebede</rhyme></l>
        <l id="s12:l4" met="2" type="-+">Van Godes <rhyme label="c" type="m">Zoon</rhyme>:</l>
        <l id="s12:l5" met="2" type="-+">Dat de ziel <rhyme label="c" type="m" corresp="#s12:l4">schoon</rhyme></l>
        <l id="s12:l6" met="2" type="-+">Blijft reyn en <rhyme label="b" type="m" corresp="#s12:l3">net</rhyme>.</l>
        <l id="s12:l7" met="4" type="-+">Verdrijft de ketters winde // die <rhyme label="d" type="f">blinde</rhyme>.</l>
        <l id="s12:l8" met="2" type="-+">De sonde <rhyme label="e" type="m">bant</rhyme></l>
        <l id="s12:l9" met="2" type="-+">Breeckt, of <rhyme label="e" type="m" corresp="#s12:l8">verbrant</rhyme>,</l>
        <l id="s12:l10" met="3" type="+-">En dat ons ziel kan <rhyme label="d" type="f" corresp="#s12:l7">binde</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

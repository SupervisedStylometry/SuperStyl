  <author>Jacob Groenewegen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Iezus vol <rhyme label="a" type="f">genade</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Vol <rhyme label="b" type="m">algenoegzaamheid</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">O zee om in te <rhyme label="a" type="f" corresp="#s1:l1">bade</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Mijn heyl in <rhyme label="b" type="m" corresp="#s1:l2">eeuwigheid</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Tot wien zoud’ ik my <rhyme label="c" type="f">wende</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">My wende // my <rhyme label="c" type="f" corresp="#s1:l5">wende</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">’t Is rondom vol <rhyme label="c" type="f" corresp="#s1:l5">elende</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">By u is <rhyme label="b" type="m" corresp="#s1:l2">zaligheid</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ik zit in reurig <rhyme label="a" type="f">duyster</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Mijn ziel is zonder <rhyme label="b" type="m">ligt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Als gy u glans en <rhyme label="a" type="f" corresp="#s2:l1">luyster</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Neemt weg uyt mijn <rhyme label="b" type="m" corresp="#s2:l2">gezigt</rhyme>;</l>
        <l id="s2:l5" met="3" type="-+">Dan staat mijn ziel <rhyme label="c" type="f">verleegen</rhyme>,</l>
        <l id="s2:l6" met="2" type="-+">Verleegen // <rhyme label="c" type="f" corresp="#s2:l5">verleegen</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Ik mis de regte <rhyme label="c" type="f" corresp="#s2:l5">weegen</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">O Iezus <rhyme label="b" type="m" corresp="#s2:l2">onderrigt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">En leert mijn ziele <rhyme label="a" type="f">spoede</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">De weg na ’t zalig <rhyme label="b" type="m">hoog</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">En zonder mat of <rhyme label="a" type="f" corresp="#s3:l1">moede</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Met heete en met <rhyme label="b" type="m" corresp="#s3:l2">oog</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">My steeds na bove <rhyme label="c" type="f">wende</rhyme>,</l>
        <l id="s3:l6" met="2" type="-+">My wende // my <rhyme label="c" type="f" corresp="#s3:l5">wende</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">’t Is rondom vol <rhyme label="c" type="f" corresp="#s3:l5">elende</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Ag dat gy <rhyme label="b" type="m" corresp="#s3:l2">nederboog</rhyme>:</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">En met u geestes <rhyme label="a" type="f">stralen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Kwam schynen in my <rhyme label="b" type="m">hert</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Om my te ryg te <rhyme label="a" type="f" corresp="#s4:l1">haalen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Wanneer ik zie <rhyme label="b" type="m" corresp="#s4:l2">verwert</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">Waar heen zou ik my <rhyme label="c" type="f">wende</rhyme>,</l>
        <l id="s4:l6" met="2" type="-+">My wende // my <rhyme label="c" type="f" corresp="#s4:l5">wende</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">’t Is rondom vol <rhyme label="c" type="f" corresp="#s4:l5">elende</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">En niet dan ziele <rhyme label="b" type="m" corresp="#s4:l2">smert</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">O wilt niet van my <rhyme label="a" type="f">scheyden</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Kom Iezus vat mijn <rhyme label="b" type="m">hant</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Laat my u geest <rhyme label="a" type="f" corresp="#s5:l1">geleyden</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">In ’t zalig effen <rhyme label="b" type="m" corresp="#s5:l2">land</rhyme>:</l>
        <l id="s5:l5" met="3" type="-+">Waar heen zou ik my <rhyme label="c" type="f">wende</rhyme>,</l>
        <l id="s5:l6" met="2" type="-+">My wende // my <rhyme label="c" type="f" corresp="#s5:l5">wende</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">’t Is rondom vol <rhyme label="c" type="f" corresp="#s5:l5">elende</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">En smeer aan alle <rhyme label="b" type="m" corresp="#s5:l2">kant</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">O Iezus weest mijn <rhyme label="a" type="f">borge</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Mijn zonde veel en <rhyme label="b" type="m">groot</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Die make my veel <rhyme label="a" type="f" corresp="#s6:l1">zorge</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Sy werke my de <rhyme label="b" type="m" corresp="#s6:l2">dood</rhyme>:</l>
        <l id="s6:l5" met="3" type="-+">Waar heen zou ik my <rhyme label="c" type="f">wende</rhyme>,</l>
        <l id="s6:l6" met="2" type="-+">My wende // my <rhyme label="c" type="f" corresp="#s6:l5">wende</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">’t Is rondom vol <rhyme label="c" type="f" corresp="#s6:l5">elende</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Vol droefheid angst en <rhyme label="b" type="m" corresp="#s6:l2">nood</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">In my en zijn geen <rhyme label="a" type="f">kragte</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Mijn Iezus o mijn <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Ik kan geen een <rhyme label="a" type="f" corresp="#s7:l1">gedagte</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Formeren tot u <rhyme label="b" type="m" corresp="#s7:l2">eer</rhyme>:</l>
        <l id="s7:l5" met="3" type="-+">Waar heen zou ik my <rhyme label="c" type="f">wende</rhyme>,</l>
        <l id="s7:l6" met="2" type="-+">My wende // my <rhyme label="c" type="f" corresp="#s7:l5">wende</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Ik heb niet als <rhyme label="c" type="f" corresp="#s7:l5">elende</rhyme></l>
        <l id="s7:l8" met="3" type="-+">O Koning my <rhyme label="b" type="m" corresp="#s7:l2">regeer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">En kom ik neer te <rhyme label="a" type="f">kniele</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Door u om al mijn <rhyme label="b" type="m">noot</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Te klage, o mijn <rhyme label="a" type="f" corresp="#s8:l1">ziele</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Is dikwerf dor en <rhyme label="b" type="m" corresp="#s8:l2">dood</rhyme>:</l>
        <l id="s8:l5" met="3" type="-+">Sog waar zou ik my <rhyme label="c" type="f">wende</rhyme>,</l>
        <l id="s8:l6" met="2" type="-+">My wende // my <rhyme label="c" type="f" corresp="#s8:l5">wende</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Ik heb niet als <rhyme label="c" type="f" corresp="#s8:l5">elende</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">En klagen in uw <rhyme label="b" type="m" corresp="#s8:l2">schoot</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Zal ik my gaan <rhyme label="a" type="f">begeven</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Te spreeke van u <rhyme label="b" type="m">naam</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">’k Heb dikwerd geest nog <rhyme label="a" type="f" corresp="#s9:l1">leeven</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Mijn hert is niet <rhyme label="b" type="m" corresp="#s9:l2">bekwaam</rhyme>:</l>
        <l id="s9:l5" met="3" type="-+">Dog waar zal ik my <rhyme label="c" type="f">wende</rhyme>,</l>
        <l id="s9:l6" met="2" type="-+">My wende // my <rhyme label="c" type="f" corresp="#s9:l5">wende</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Ik heb niet als <rhyme label="c" type="f" corresp="#s9:l5">elende</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Ia al elend te <rhyme label="b" type="m" corresp="#s9:l2">zaam</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">’k Hoor somtijds ernstig <rhyme label="a" type="f">preken</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">U knegten op den <rhyme label="b" type="m">stoel</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Maar ’t hert en wil niet <rhyme label="a" type="f" corresp="#s10:l1">breken</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">’k Heb dikwerf geen <rhyme label="b" type="m" corresp="#s10:l2">gevoel</rhyme>:</l>
        <l id="s10:l5" met="3" type="-+">Daarom moet ik my <rhyme label="c" type="f">wende</rhyme>,</l>
        <l id="s10:l6" met="2" type="-+">My wende // my <rhyme label="c" type="f" corresp="#s10:l5">wende</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Tot u met mijn <rhyme label="c" type="f" corresp="#s10:l5">elende</rhyme>,</l>
        <l id="s10:l8" met="3" type="-+">Al was ’t dan nog zoo <rhyme label="b" type="m" corresp="#s10:l2">koel</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Ik weet gy zijt <rhyme label="a" type="f">genadig</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Volzalig en <rhyme label="b" type="m">genoeg</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Door die die u <rhyme label="a" type="f" corresp="#s11:l1">gestadig</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Zoekt hertelijk en <rhyme label="b" type="m" corresp="#s11:l2">vroeg</rhyme>:</l>
        <l id="s11:l5" met="3" type="-+">Daarom zal ik my <rhyme label="c" type="f">wende</rhyme>,</l>
        <l id="s11:l6" met="2" type="-+">My wende // my <rhyme label="c" type="f" corresp="#s11:l5">wende</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">Tot u met mijn <rhyme label="c" type="f" corresp="#s11:l5">elende</rhyme>,</l>
        <l id="s11:l8" met="3" type="-+">Soo lang ik heb <rhyme label="b" type="m" corresp="#s11:l2">genoeg</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">En dat zal my <rhyme label="a" type="f">aankleeven</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">En ik niet rake <rhyme label="b" type="m">kwijt</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Tot dat ik na dit <rhyme label="a" type="f" corresp="#s12:l1">leeven</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">In zalige <rhyme label="b" type="m" corresp="#s12:l2">heerlijkheid</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">Volmaakt u zal <rhyme label="c" type="f">aanschouwen</rhyme>,</l>
        <l id="s12:l6" met="2" type="-+">Aanschouwen // <rhyme label="c" type="f" corresp="#s12:l5">aanschouwen</rhyme>,</l>
        <l id="s12:l7" met="3" type="-+">Bevrijt van smert en <rhyme label="c" type="f" corresp="#s12:l5">rouwen</rhyme>,</l>
        <l id="s12:l8" met="3" type="-+">Sijt welkom <rhyme label="b" type="m" corresp="#s12:l2">eeuwigheid</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

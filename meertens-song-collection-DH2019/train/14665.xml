    <melody>Nerea schoonste van uw geburen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Pieter van Gelre</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">GHy zijt wel gh'luckigh <rhyme label="a" type="f">Nicodeme</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Nu u die grooten jonst <rhyme label="b" type="m">gheschiedt</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Dat ghy hem meught van't Cruyce <rhyme label="a" type="f" corresp="#s1:l1">nemen</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Die Hemel ende Aerd' <rhyme label="b" type="m" corresp="#s1:l2">ghebiedt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">En ghy Ioseph van <rhyme label="a" type="f">Arimatheye</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Ontfanght den alderhooghsten <rhyme label="b" type="m">staet</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Nu ghy de armen om de <rhyme label="a" type="f" corresp="#s2:l1">syen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Van Christus doode lichaem <rhyme label="b" type="m" corresp="#s2:l2">slaet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Heere mijn hert dat wort <rhyme label="a" type="f">weemoedich</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Nu dat ick u dus dichte <rhyme label="b" type="m">by</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Aenschouwen mach, mismaeckt en <rhyme label="a" type="f" corresp="#s3:l1">bloedich</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Sonder een plaets te wesen <rhyme label="b" type="m" corresp="#s3:l2">vry</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Wie sal de scherpe doorne <rhyme label="a" type="f">Croone</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Afdoen van u door-wonde <rhyme label="b" type="m">hooft</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Sal dat niet doen Zeb'dei <rhyme label="a" type="f" corresp="#s4:l1">Sone</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Of is hy al te <rhyme label="b" type="m" corresp="#s4:l2">afgheslooft</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Hy heeft te veel met uwe <rhyme label="a" type="f">Moeder</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Bedruckt ghesworven heen en <rhyme label="b" type="m">weer</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Ghelijck als een oprechten <rhyme label="a" type="f" corresp="#s5:l1">Broede</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">en trouwen Dienaer van sijn <rhyme label="b" type="m" corresp="#s5:l2">heer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Wy sullen die de sterckste <rhyme label="a" type="f">laten</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Soo soet afnemen als hy <rhyme label="b" type="m">kan</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">En u dan legghen in <rhyme label="a" type="f" corresp="#s6:l1">Lijnwaten</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Fijn doeck als toekomt sulcken <rhyme label="b" type="m" corresp="#s6:l2">man</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Doch Nicodeem' wil u eerst <rhyme label="a" type="f">salven</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Met dat hy brocht heeft uyt de <rhyme label="b" type="m">stadt</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">En magdalena noch <rhyme label="a" type="f" corresp="#s7:l1">behalven</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Maeckt u noch eens met reanen <rhyme label="b" type="m" corresp="#s7:l2">nat</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Rust u nu onsen <rhyme label="a" type="f">Salichmaker</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Rust u doorwonde doode <rhyme label="b" type="m">lijck</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Rust u oprechte <rhyme label="a" type="f" corresp="#s8:l1">minne-blaecker</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Want onse ziele maeckt ghy <rhyme label="b" type="m" corresp="#s8:l2">rijck</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

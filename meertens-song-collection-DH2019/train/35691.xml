    <melody>Es ist das Heil uns kommen her</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Albertus Buitendyck</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HOe saligh, hoe heyligh ende <rhyme label="a" type="m">vroom</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Ghy nu zijt, ofte meught <rhyme label="b" type="f">weezen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">U saligheyt werckt met vrees en <rhyme label="a" type="m" corresp="#s1:l1">schroom</rhyme>.</l>
        <l id="s1:l4" met="3" type="-+">U verdoemenis wilt <rhyme label="b" type="f" corresp="#s1:l2">vreezen</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Iudas is een Apostel <rhyme label="c" type="m">geweest</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Beminde den Heer met lijf en <rhyme label="c" type="m" corresp="#s1:l5">geest</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Door mirak'len is <rhyme label="b" type="f" corresp="#s1:l2">gepresen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Door gierigheyt soo verr' is <rhyme label="a" type="m">gebrocht</rhyme>;</l>
        <l id="s2:l2" met="3" type="-+">Aen de Iooden d'Heer der <rhyme label="b" type="f">Heeren</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Om dertigh penningen heeft <rhyme label="a" type="m" corresp="#s2:l1">verkocht</rhyme>.</l>
        <l id="s2:l4" met="3" type="-+">Om sijn boosheyt te <rhyme label="b" type="f" corresp="#s2:l2">vermeeren</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Sijn Meester verraet na dese <rhyme label="c" type="m">koop</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Sijn selve opknoopte door <rhyme label="c" type="m" corresp="#s2:l5">wan-hoop</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Al 't ingewandt loopt om <rhyme label="b" type="f" corresp="#s2:l2">veeren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Na Judas val, en sijn eyge <rhyme label="a" type="m">moordt</rhyme>;</l>
        <l id="s3:l2" met="3" type="-+">Sint Pieter is <rhyme label="b" type="f">op-gerezen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Aen een groote schaer, seyt: Broeders <rhyme label="a" type="m" corresp="#s3:l1">hoort</rhyme></l>
        <l id="s3:l4" met="3" type="-+">In Davids Psalmen wy <rhyme label="b" type="f" corresp="#s3:l2">lezen</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Dat Iudas sijn Bisdom ende <rhyme label="c" type="m">staet</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Verlate souw' een man na Goods <rhyme label="c" type="m" corresp="#s3:l5">raedt</rhyme></l>
        <l id="s3:l7" met="3" type="-+">In sijn plaets gestelt moet <rhyme label="b" type="f" corresp="#s3:l2">wezen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Laet ons nu hierom eendrachtigh <rhyme label="a" type="m">al</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Een Goodts bekende <rhyme label="b" type="f">verklaren</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Die met ons, end' Heer op 't aerdtsche <rhyme label="a" type="m" corresp="#s4:l1">dal</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Geleeft heeft eenige <rhyme label="b" type="f" corresp="#s4:l2">Iaren</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Die getuyge derft aen kleyn en <rhyme label="c" type="m">groot</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Dat Jesus na sijn lijden, en <rhyme label="c" type="m" corresp="#s4:l5">doodt</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Ten Hemel is <rhyme label="b" type="f" corresp="#s4:l2">opgevaren</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Bereyt hier toe de heele schaer <rhyme label="a" type="m">was'</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Stellen in 't midden twee <rhyme label="b" type="f">helden</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Matthias, en Ioseph. <rhyme label="a" type="m" corresp="#s5:l1">Barnabas</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Die yder rechtveerdigh <rhyme label="b" type="f" corresp="#s5:l2">nielden</rhyme>.</l>
        <l id="s5:l5" met="4" type="-+">'t Volck bidt: Heer d'harten zijn u <rhyme label="c" type="m">bekent</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Toont op wie van twee gh'u oogen <rhyme label="c" type="m" corresp="#s5:l5">went</rhyme>.</l>
        <l id="s5:l7" met="3" type="-+">'t Lot Matthijs Apostel <rhyme label="b" type="f" corresp="#s5:l2">stelde</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Waerdigh was dese staet Sint <rhyme label="a" type="m">Matthijs</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Want in Godes liefde <rhyme label="b" type="f">brande</rhyme>;</l>
        <l id="s6:l3" met="4" type="-+">Godtvruchtigh, yverigh ende <rhyme label="a" type="m" corresp="#s6:l1">wijs</rhyme>;</l>
        <l id="s6:l4" met="3" type="-+">Vreest vyer, swaerdt, pijnen, noch <rhyme label="b" type="f" corresp="#s6:l2">banden</rhyme>.</l>
        <l id="s6:l5" met="4" type="-+">Soo vroom had hem d'Heyl'ge geest <rhyme label="c" type="m">gemaeckt</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Sijn eyge zin en 's werelts <rhyme label="c" type="m" corresp="#s6:l5">versaeckt</rhyme>.</l>
        <l id="s6:l7" met="3" type="-+">Leert, en preeckt in veele <rhyme label="b" type="f" corresp="#s6:l2">Landen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">'t Was een spiegel van <rhyme label="a" type="m">ootmoedigheydt</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">En zuyver van hart en <rhyme label="b" type="f">leden</rhyme>;</l>
        <l id="s7:l3" met="4" type="-+">Buyghde heel na <rhyme label="a" type="m" corresp="#s7:l1">d'onderdanigheydt</rhyme>.</l>
        <l id="s7:l4" met="3" type="-+">Heydens veel, en Iode <rhyme label="b" type="f" corresp="#s7:l2">meden</rhyme></l>
        <l id="s7:l5" met="4" type="-+">Bekeert heeft de'es trouwe Godes <rhyme label="c" type="m">Tolck</rhyme>;</l>
        <l id="s7:l6" met="4" type="-+">Hierom gesteenight is van 't quaedt <rhyme label="c" type="m" corresp="#s7:l5">volck</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">En onthooft, krijght 's Hemels <rhyme label="b" type="f" corresp="#s7:l2">steden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Als ghy yemandt ziet verlate <rhyme label="a" type="m">Godt</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Of hem door Kett'ry <rhyme label="b" type="f">verworgen</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Laet, met deze lacht nochte oock <rhyme label="a" type="m" corresp="#s8:l1">spot</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Secht: nu 't hem gebeurt, my <rhyme label="b" type="f" corresp="#s8:l2">morgen</rhyme>.</l>
        <l id="s8:l5" met="4" type="-+">Traegheyt, gierigheyt en wanhoop <rhyme label="c" type="m">vliedt</rhyme>.</l>
        <l id="s8:l6" met="4" type="-+">Sonden haet; doet 't minst dat Godt <rhyme label="c" type="m" corresp="#s8:l5">gebiedt</rhyme>;</l>
        <l id="s8:l7" met="3" type="-+">Wapent u met vrees en <rhyme label="b" type="f" corresp="#s8:l2">sorgen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Matthijs! Voorstaender van Godes <rhyme label="a" type="m">Wet</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Apostel waerdigh <rhyme label="b" type="f">verkooren</rhyme>;</l>
        <l id="s9:l3" met="4" type="-+">Verkrijght ons alle door uw' <rhyme label="a" type="m" corresp="#s9:l1">gebedt</rhyme>:</l>
        <l id="s9:l4" met="3" type="-+">Dat Iongen noch langh <rhyme label="b" type="f" corresp="#s9:l2">gebooren</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Door Satan, wanhoop of <rhyme label="c" type="m">gierigheydt</rhyme></l>
        <l id="s9:l6" met="4" type="-+">Van Godt, of 't Roomsch geloof wort <rhyme label="c" type="m" corresp="#s9:l5">verleyt</rhyme>:</l>
        <l id="s9:l7" met="3" type="-+">Toont ons gebedt te <rhyme label="b" type="f" corresp="#s9:l2">verhooren</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Bewaert o Heer! ons verstandt, en <rhyme label="a" type="m">hart</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Onse sinnen al, en <rhyme label="b" type="f">soolen</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Dat wy om eer, staet, gelt ofte <rhyme label="a" type="m" corresp="#s10:l1">smart</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Van uw', Ã´ Iesu! noyt <rhyme label="b" type="f" corresp="#s10:l2">doolen</rhyme>.</l>
        <l id="s10:l5" met="4" type="-+">Maeckt ons mee bequaem met Sint <rhyme label="c" type="m">Matthijs</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Te komen in 's Hemels <rhyme label="c" type="m" corresp="#s10:l5">Paradijs</rhyme>.</l>
        <l id="s10:l7" met="3" type="-+">Bewaert ons van d'Helsche <rhyme label="b" type="f" corresp="#s10:l2">koolen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

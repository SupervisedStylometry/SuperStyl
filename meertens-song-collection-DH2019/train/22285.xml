    <melody>O Herr Gott begnade mich</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">VErhoort mijn ghebedt, o Heere <rhyme label="a" type="m">Godt</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">En vaet mijn bidden inde <rhyme label="a" type="m" corresp="#s1:l1">noodt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Om uwer waerheyt <rhyme label="b" type="f">wille</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Wilt mijn begheerte <rhyme label="b" type="f" corresp="#s1:l3">veruullen</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">En oock om uwe <rhyme label="c" type="m">rechtuaerdicheyt</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Gheeft my doch antwoorde in mijn <rhyme label="c" type="m" corresp="#s1:l5">leydt</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">En betreckt doch niet int <rhyme label="d" type="f">rechte</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Noch vecht niet met my uwen <rhyme label="d" type="f" corresp="#s1:l7">knechte</rhyme>,</l>
        <l id="s1:l9" met="4" type="-+">Want daer en leeft gheen, die voor u <rhyme label="e" type="m">aenschijn</rhyme>,</l>
        <l id="s1:l10" met="4" type="-+">Mach eenichsins rechtuaerdich <rhyme label="e" type="m" corresp="#s1:l9">zijn</rhyme>:</l>
        <l id="s1:l11" met="4" type="+-">Helpt Heer, want de vyandt veruolcht mijn <rhyme label="f" type="m">siel</rhyme>,</l>
        <l id="s1:l12" met="4" type="-+">En mijn leuen hy my nemen <rhyme label="f" type="m" corresp="#s1:l11">wil</rhyme>,</l>
        <l id="s1:l13" met="3" type="-+">En hy treedt my gheheel te <rhyme label="g" type="f">gronde</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Hy sedt my inde <rhyme label="a" type="m">duysternis</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Glijck de dooden op der wereldt <rhyme label="a" type="m" corresp="#s2:l1">ghewis</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Mijnen gheest die is benaudt <rhyme label="b" type="f">seere</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En mijn hert te ontstelt noch <rhyme label="b" type="f" corresp="#s2:l3">meere</rhyme>:</l>
        <l id="s2:l5" met="4" type="-+">Ick ghedencke aenden voorleden <rhyme label="c" type="m">tijdt</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">En peyse, op uwe wercken <rhyme label="c" type="m" corresp="#s2:l5">wijdt</rhyme>:</l>
        <l id="s2:l7" met="3" type="-+">Oock van het doen uwer <rhyme label="d" type="f">handen</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Daer sal ick af spreken sonder <rhyme label="d" type="f" corresp="#s2:l7">schande</rhyme>:</l>
        <l id="s2:l9" met="4" type="-+">Ick breyde mijn handen wt tot <rhyme label="e" type="m">u</rhyme>,</l>
        <l id="s2:l10" met="4" type="-+">Mijn siel die is soo dorstich nae <rhyme label="e" type="m" corresp="#s2:l9">u</rhyme>,</l>
        <l id="s2:l11" met="4" type="+-">Als verdroochde eerd: dies my <rhyme label="f" type="m">verhoort</rhyme>,</l>
        <l id="s2:l12" met="4" type="-+">Mijnen gheest vergaet: Heer helpt my <rhyme label="f" type="m" corresp="#s2:l11">voort</rhyme>,</l>
        <l id="s2:l13" met="3" type="-+">En wilt u voor my niet <rhyme label="g" type="f">verberghen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">U aenschijn van my doch niet en <rhyme label="a" type="m">wijck</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Op dat ick den ghenen niet word <rhyme label="a" type="m" corresp="#s3:l1">ghelijck</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Die nederwaerts inden pudt <rhyme label="b" type="f">varen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Daerom wilt my Heer <rhyme label="b" type="f" corresp="#s3:l3">bewaren</rhyme>:</l>
        <l id="s3:l5" met="4" type="-+">Laet my vroech u <rhyme label="c" type="m">bermherticheyt</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Hooren, in mijnen noodt en <rhyme label="c" type="m" corresp="#s3:l5">leydt</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Want Heer in u ick seer <rhyme label="d" type="f">hope</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Daerom maeckt my den wech Heer <rhyme label="d" type="f" corresp="#s3:l7">open</rhyme>:</l>
        <l id="s3:l9" met="4" type="-+">Op den welcken dat ick sal gaen <rhyme label="e" type="m">voordaen</rhyme>:</l>
        <l id="s3:l10" met="4" type="-+">Tot u ick mijn siel opheffen <rhyme label="e" type="m" corresp="#s3:l9">gaen</rhyme>,</l>
        <l id="s3:l11" met="4" type="+-">Drom van mijn vyanden verlost <rhyme label="f" type="m">my</rhyme>,</l>
        <l id="s3:l12" met="4" type="-+">Want mijn toeulucht Heer Godt zijt <rhyme label="f" type="m" corresp="#s3:l11">ghy</rhyme>,</l>
        <l id="s3:l13" met="3" type="-+">Daerom leert my doen uwen <rhyme label="g" type="f">wille</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Want ghy mijn Godt sult my <rhyme label="a" type="m">bystaen</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Uwen Gheest sal my leyden op de rechte <rhyme label="a" type="m" corresp="#s4:l1">baen</rhyme>:</l>
        <l id="s4:l3" met="3" type="-+">En oock om uwen naem <rhyme label="b" type="f">Heere</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Verquickt my doch ras en <rhyme label="b" type="f" corresp="#s4:l3">seere</rhyme>:</l>
        <l id="s4:l5" met="4" type="-+">En vuert mijn Siel wt den druck en <rhyme label="c" type="m">leydt</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">En dat om uwe <rhyme label="c" type="m" corresp="#s4:l5">rechtuaerdicheyt</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Mijnen vyandt vernielt doch <rhyme label="d" type="f">seere</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Door u goetheyt wilt hem van my <rhyme label="d" type="f" corresp="#s4:l7">keeren</rhyme>:</l>
        <l id="s4:l9" met="4" type="-+">En vernielt oock al die ghene <rhyme label="e" type="m">snel</rhyme>,</l>
        <l id="s4:l10" met="4" type="-+">Die mijn siele aendoen groot <rhyme label="e" type="m" corresp="#s4:l9">ghequel</rhyme>,</l>
        <l id="s4:l11" met="4" type="+-">Want ick ben uwen knecht alle <rhyme label="f" type="m">teydt</rhyme>,</l>
        <l id="s4:l12" met="4" type="-+">O Heer het volck dat gheuanghen <rhyme label="f" type="m" corresp="#s4:l11">leydt</rhyme>,</l>
        <l id="s4:l13" met="3" type="-+">Verlost, en die u <rhyme label="g" type="f">aenroepen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

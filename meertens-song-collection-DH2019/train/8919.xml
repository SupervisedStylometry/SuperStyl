  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">SIet nu end Looft den Heer met <rhyme label="a" type="m">vlijt</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Ghy all' die s'Heeren Knechten <rhyme label="a" type="m" corresp="#s1:l1">zijt</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Ghy die in syn Huys s' Nachtes <rhyme label="b" type="m">staet</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Dient synen Naeme Vroech end <rhyme label="b" type="m" corresp="#s1:l3">Laet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Hefft uwe Handen op met <rhyme label="a" type="m">Eer</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Int Heylichdom end Looft den <rhyme label="a" type="m" corresp="#s2:l1">HEEr</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Van Herten reyn end wel <rhyme label="b" type="m">Bereydt</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Hem dient in alder <rhyme label="b" type="m" corresp="#s2:l3">Heylicheydt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">De HEEre die daer Eewich <rhyme label="a" type="m">Leeft</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Wt Zyon u syn Seghen <rhyme label="a" type="m" corresp="#s3:l1">gheeft</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Die HEmel ende Aerde <rhyme label="b" type="m">beyd'</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Wt niet heeft maeckt end wel <rhyme label="b" type="m" corresp="#s3:l3">bereydt</rhyme>.</l>
      </lg>
    </lg>
  </text>

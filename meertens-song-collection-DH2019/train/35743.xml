    <tags>
      <tag standard-name="heiligenlied" translation="saint song">heiligenlied</tag>
    </tags>
    <melody>Het waren negen soldaten</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Albertus Buitendyck</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">MIjn Godt en Al, wilt <rhyme label="a" type="f">geven</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Aen my u nietigh <rhyme label="b" type="m">Mensch</rhyme>;</l>
        <l id="s1:l3" met="3" type="-+">Dat ick Sint Pieters <rhyme label="a" type="f" corresp="#s1:l1">leven</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En daden hooch <rhyme label="a" type="f" corresp="#s1:l1">verheven</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Mach zingen na mijn <rhyme label="b" type="m" corresp="#s1:l2">wensch</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Soo dra Sint Pieter <rhyme label="a" type="f">hoorde</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Dit woordt: Komt volght my <rhyme label="b" type="m">na</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Verlaet al 's wereldts <rhyme label="a" type="f" corresp="#s2:l1">koorden</rhyme>.</l>
        <l id="s2:l4" met="3" type="-+">Door sijn tekens en <rhyme label="a" type="f" corresp="#s2:l1">woorden</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Vanght menschen vroegh en <rhyme label="b" type="m" corresp="#s2:l2">spa</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Krijght boven al Goods <rhyme label="a" type="f">vrinden</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">'s Hemels sleutels <rhyme label="b" type="m">alleen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Te binden, en <rhyme label="a" type="f" corresp="#s3:l1">t'ontbinden</rhyme>.</l>
        <l id="s3:l4" met="3" type="-+">Christus hem soo <rhyme label="a" type="f" corresp="#s3:l1">beminden</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Dat hy hem noemt een <rhyme label="b" type="m" corresp="#s3:l2">steen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Op deze steen sal <rhyme label="a" type="f">stellen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En bouwe sijnen <rhyme label="b" type="m">Kerck</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Die niet vreest Ketters <rhyme label="a" type="f" corresp="#s4:l1">quellen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Noch al de macht der <rhyme label="a" type="f" corresp="#s4:l1">Hellen</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Sijn g'loof sal blijve <rhyme label="b" type="m" corresp="#s4:l2">sterck</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Na dat Christus <rhyme label="a" type="f">gevaren</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Was na sijn Hemels <rhyme label="b" type="m">Hof</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Moet hy al Chistus <rhyme label="a" type="f" corresp="#s5:l1">scharen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Voeden, ende <rhyme label="a" type="f" corresp="#s5:l1">bewaren</rhyme>;</l>
        <l id="s5:l5" met="3" type="-+">Wie spreken sal de'es <rhyme label="b" type="m" corresp="#s5:l2">lof</rhyme>?</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Goods naem by yder <rhyme label="a" type="f">eerde</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">'t Geloof seer vroom <rhyme label="b" type="m">belijdt</rhyme>.</l>
        <l id="s6:l3" met="3" type="-+">Ioden en Heydens <rhyme label="a" type="f" corresp="#s6:l1">leerde</rhyme>;</l>
        <l id="s6:l4" met="3" type="-+">Veel duyzenden <rhyme label="a" type="f" corresp="#s6:l1">bekeerde</rhyme></l>
        <l id="s6:l5" met="3" type="-+">In eenen korte <rhyme label="b" type="m" corresp="#s6:l2">tijdt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">De Krancken al <rhyme label="a" type="f">geneezen</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Als sijn schaduw, haer <rhyme label="b" type="m">raeckt</rhyme>:</l>
        <l id="s7:l3" met="3" type="-+">Van niemandt hoe <rhyme label="a" type="f" corresp="#s7:l1">gepreezen</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Sult ghy dit ergens <rhyme label="a" type="f" corresp="#s7:l1">leezen</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">Een Creupel gaende <rhyme label="b" type="m" corresp="#s7:l2">maeckt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Sint Pieter, Man der <rhyme label="a" type="f">Mannen</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Wort van Herodes <rhyme label="b" type="m">quaedt</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Gevangen, en <rhyme label="a" type="f" corresp="#s8:l1">gespannen</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">In een Kercker <rhyme label="a" type="f" corresp="#s8:l1">gebannen</rhyme>:</l>
        <l id="s8:l5" met="3" type="-+">d' Engel hem daer uyt <rhyme label="b" type="m" corresp="#s8:l2">laet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Hy vreest niet meer de <rhyme label="a" type="f">Ioden</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Hoe boos, als 't jonghste <rhyme label="b" type="m">kindt</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Noch pijn, noch hondert <rhyme label="a" type="f" corresp="#s9:l1">dooden</rhyme>.</l>
        <l id="s9:l4" met="3" type="-+">Simon, die booz, en <rhyme label="a" type="f" corresp="#s9:l1">snoode</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Toovenaer heel <rhyme label="b" type="m" corresp="#s9:l2">verwint</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Geen Schilder sal <rhyme label="a" type="f">af-malen</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Sijn tekens, en daden <rhyme label="b" type="m">al</rhyme>;</l>
        <l id="s10:l3" met="3" type="-+">Noch tongh kan die <rhyme label="a" type="f" corresp="#s10:l1">verhalen</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">De pennen alle <rhyme label="a" type="f" corresp="#s10:l1">dwalen</rhyme></l>
        <l id="s10:l5" met="3" type="-+">In 't schrijven van 't <rhyme label="b" type="m" corresp="#s10:l2">getal</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Van Ant'ochien t' <rhyme label="a" type="f">Romen</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Heeft sijnen stoel <rhyme label="b" type="m">gestelt</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Hier preeckt hy sonder <rhyme label="a" type="f" corresp="#s11:l1">schromen</rhyme>;</l>
        <l id="s11:l4" met="3" type="-+">Dagelijcx vruchten <rhyme label="a" type="f" corresp="#s11:l1">komen</rhyme></l>
        <l id="s11:l5" met="3" type="-+">Uyt deze vroomen <rhyme label="b" type="m" corresp="#s11:l2">heldt</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">De Roomsche stoel, vol <rhyme label="a" type="f">baren</rhyme></l>
        <l id="s12:l2" met="3" type="-+">En tempeesten, <rhyme label="b" type="m">regeert</rhyme></l>
        <l id="s12:l3" met="3" type="-+">Twee-mael thien en vijf <rhyme label="a" type="f" corresp="#s12:l1">Iaren</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Soo eendrachtigh <rhyme label="a" type="f" corresp="#s12:l1">verklaren</rhyme></l>
        <l id="s12:l5" met="3" type="-+">d'Oudt-vaders, <rhyme label="b" type="m" corresp="#s12:l2">hoogh-geleert</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Nero laet hem hier <rhyme label="a" type="f">vangen</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Gees'len: na d' aerden 't <rhyme label="b" type="m">hooft</rhyme></l>
        <l id="s13:l3" met="3" type="-+">(Na sijn wensch en <rhyme label="a" type="f" corresp="#s13:l1">verlangen</rhyme>)</l>
        <l id="s13:l4" met="3" type="-+">Wordt aen een Kruys <rhyme label="a" type="f" corresp="#s13:l1">gehangen</rhyme>.</l>
        <l id="s13:l5" met="3" type="-+">Al stervende Godt <rhyme label="b" type="m" corresp="#s13:l2">looft</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Veel Christ'nen, die <rhyme label="a" type="f">vervloecken</rhyme></l>
        <l id="s14:l2" met="3" type="-+">Ketters,en Satans <rhyme label="b" type="m">sogh</rhyme>;</l>
        <l id="s14:l3" met="3" type="-+">Uyt al de werelts <rhyme label="a" type="f" corresp="#s14:l1">hoecken</rhyme></l>
        <l id="s14:l4" met="3" type="-+">Sijn gebeenten <rhyme label="a" type="f" corresp="#s14:l1">besoecken</rhyme>,</l>
        <l id="s14:l5" met="3" type="-+">Tot Romen zijn die <rhyme label="b" type="m" corresp="#s14:l2">noch</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">KOmt Heyligh Geest, doet branden ons <rhyme label="a" type="f">herten</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Die de fonteyn van liefde <rhyme label="b" type="m">syt</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Komt Hemels licht, doet vluchten ons <rhyme label="a" type="f" corresp="#s1:l1">smerten</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Onsteekt ons al in <rhyme label="b" type="m" corresp="#s1:l2">vierigheydt</rhyme>:</l>
        <l id="s1:l5" met="1" type="-+">In <rhyme label="c" type="m">pyn</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Moet gy ons trooster <rhyme label="c" type="m" corresp="#s1:l5">syn</rhyme>:</l>
        <l id="s1:l7" met="4" type="-+">Brenght in uw' komste ons d'Hemelsche <rhyme label="d" type="f">gaeven</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">Laet uw' fonteyn van grati' ons <rhyme label="d" type="f" corresp="#s1:l7">laeven</rhyme>,</l>
        <l id="s1:l9" met="2" type="-+">Gy moet in <rhyme label="c" type="m" corresp="#s1:l5">pyn</rhyme></l>
        <l id="s1:l10" met="2" type="-+">Ons trooster <rhyme label="c" type="m" corresp="#s1:l5">syn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Komt geeft ons wensch, komt neer tot ons <rhyme label="a" type="f">daelen</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Van uw soet vier hanght ons <rhyme label="b" type="m">geluck</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Jaeght in ons Ziel uw' brandende <rhyme label="a" type="f" corresp="#s2:l1">straelen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">En brenght een eynde van ons' <rhyme label="b" type="m" corresp="#s2:l2">druck</rhyme>.</l>
        <l id="s2:l5" met="1" type="-+">In <rhyme label="c" type="m">strydt</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Gy al ons hulpe <rhyme label="c" type="m" corresp="#s2:l5">syt</rhyme>:</l>
        <l id="s2:l7" met="4" type="-+">Komt uw goedt schencken, vol Hemels <rhyme label="d" type="f">genuchten</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">Doet alle wee uyt t'herte verr' <rhyme label="d" type="f" corresp="#s2:l7">vluchten</rhyme>,</l>
        <l id="s2:l9" met="2" type="-+">Gy in den <rhyme label="c" type="m" corresp="#s2:l5">strydt</rhyme></l>
        <l id="s2:l10" met="2" type="-+">Ons hulpe <rhyme label="c" type="m" corresp="#s2:l5">syt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Geeft wysheydt, komt ons sinnen <rhyme label="a" type="f">verstercken</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Opent t'verstandt voor t'eeuwigh <rhyme label="b" type="m">goedt</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Geeft wetenschap in alle ons <rhyme label="a" type="f" corresp="#s3:l1">wercken</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Geeft liefd' en kracht aen ons <rhyme label="b" type="m" corresp="#s3:l2">gemoedt</rhyme>.</l>
        <l id="s3:l5" met="1" type="-+">Dat <rhyme label="c" type="m">blaekt</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Al, die uw' soetheydt <rhyme label="c" type="m" corresp="#s3:l5">smaekt</rhyme>:</l>
        <l id="s3:l7" met="4" type="-+">Print in ons hert stantvastige <rhyme label="d" type="f">deughden</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">Leydt ons door vrees naer d'eeuwige <rhyme label="d" type="f" corresp="#s3:l7">vreughden</rhyme>:</l>
        <l id="s3:l9" met="2" type="-+">Geeft goeden <rhyme label="c" type="m" corresp="#s3:l5">raedt</rhyme>;</l>
        <l id="s3:l10" met="2" type="-+">Maekt ons <rhyme label="c" type="m" corresp="#s3:l5">versaedt</rhyme>.</l>
      </lg>
    </lg>
  </text>

  <author>Jacob Rosant</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">KOmt laet ons looven onsen <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Laet ons hem t'samen geven <rhyme label="a" type="m" corresp="#s1:l1">eer</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Die 't al geschapen heeft van <rhyme label="b" type="m">niet</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Die't al heeft onder sijn <rhyme label="b" type="m" corresp="#s1:l3">gebiet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Den goddeloosen heeft <rhyme label="a" type="m">geseydt</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">In sijn boosharts <rhyme label="a" type="m" corresp="#s2:l1">verborgentheydt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Daer is geen Godt: dus hy <rhyme label="b" type="m">vervloekt</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Is, in de boosheydt dien hy <rhyme label="b" type="m" corresp="#s2:l3">soekt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Met woorden kendt hy wel sijn <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Dien hy met werken loochent <rhyme label="a" type="m" corresp="#s3:l1">weer</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Tot alle sonden hy hem <rhyme label="b" type="m">wendt</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Als of hem Godt was <rhyme label="b" type="m" corresp="#s3:l3">onbekendt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Maer Godt magh sijn verborgen <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Men hem in al sijn Schepsels <rhyme label="a" type="m" corresp="#s4:l1">siet</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Door welken hy wordt <rhyme label="b" type="m">openbaer</rhyme>;</l>
        <l id="s4:l4" met="4" type="-+">Want in die blinkt sijn Godtheydt <rhyme label="b" type="m" corresp="#s4:l3">klaer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Het wesen van de schepsels <rhyme label="a" type="m">al</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Beduydelik dit leeren <rhyme label="a" type="m" corresp="#s5:l1">sal</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Klimt op van onder tot om <rhyme label="b" type="m">hoogh</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Soo sal Godt stralen in uw <rhyme label="b" type="m" corresp="#s5:l3">oogh</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Uw' zielen oogh, uw' eel <rhyme label="a" type="m">verstant</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Laet dat om sien aen alle <rhyme label="a" type="m" corresp="#s6:l1">kant</rhyme>.</l>
        <l id="s6:l3" met="4" type="-+">Eerst vindt gy Elementen <rhyme label="b" type="m">puer</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">De Aerde, Water, Lucht, en <rhyme label="b" type="m" corresp="#s6:l3">Vuer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">De Son, de Maen, de Starren <rhyme label="a" type="m">schoon</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Die blinken in des Hemels <rhyme label="a" type="m" corresp="#s7:l1">Troon</rhyme>:</l>
        <l id="s7:l3" met="4" type="-+">Daer boven woonen <rhyme label="b" type="m">d'Engelen</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Die Godt ons al <rhyme label="b" type="m" corresp="#s7:l3">verkondigen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Want niet kan niet voortbrengen <rhyme label="a" type="m">iet</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Noch niet en komt 'er oyt van <rhyme label="a" type="m" corresp="#s8:l1">niet</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Geen dingh sijn selfs voortbrengen <rhyme label="b" type="m">kan</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Neemt hier een goede leeringh <rhyme label="b" type="m" corresp="#s8:l3">van</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Het eerste daer het al van <rhyme label="a" type="m">is</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Dat is den grooten Godt <rhyme label="a" type="m" corresp="#s9:l1">gewis</rhyme>;</l>
        <l id="s9:l3" met="4" type="-+">Die 't al van niet geschapen <rhyme label="b" type="m">heeft</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Die alle dingh het weesen <rhyme label="b" type="m" corresp="#s9:l3">geeft</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">De Hemelen sijn wonder <rhyme label="a" type="m">groot</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">En loopen rondt om d'aerdtsche <rhyme label="a" type="m" corresp="#s10:l1">kloot</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Het water rijst, en daelt weer <rhyme label="b" type="m">neer</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">De lucht die wentelt heen en <rhyme label="b" type="m" corresp="#s10:l3">weer</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Noch hebben sy al haer <rhyme label="a" type="m">bestuer</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Sy passen seer wel op haer <rhyme label="a" type="m" corresp="#s11:l1">uer</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Hoe-wel se sonder reden <rhyme label="b" type="m">sijn</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Sy houden nochtans haer <rhyme label="b" type="m" corresp="#s11:l3">termijn</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Hierin bespeurt Goods groote <rhyme label="a" type="m">macht</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Die't al regeert dagh ende <rhyme label="a" type="m" corresp="#s12:l1">naght</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Door wie het Jaer sijn regel <rhyme label="b" type="m">houdt</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Des Soomers heet, des Winters <rhyme label="b" type="m" corresp="#s12:l3">koudt</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Het menighvuldigh <rhyme label="a" type="m">onderscheydt</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Behalven 't eygen <rhyme label="a" type="m" corresp="#s13:l1">wesentheydt</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Dat men in alle schepsels <rhyme label="b" type="m">vindt</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Pordt aen dat men den Schepper <rhyme label="b" type="m" corresp="#s13:l3">sindt</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Gout, silver, glas, metael, en <rhyme label="a" type="m">steen</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">En hebben niet dan 't sijn <rhyme label="a" type="m" corresp="#s14:l1">alleen</rhyme>;</l>
        <l id="s14:l3" met="4" type="-+">Maer boomen, kruyden, en het <rhyme label="b" type="m">gras</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">Die hebben boven 't sijn 't <rhyme label="b" type="m" corresp="#s14:l3">gewas</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Maer visschen, vogels, en het <rhyme label="a" type="m">vee</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">Die hebben het gevoel nogh <rhyme label="a" type="m" corresp="#s15:l1">mee</rhyme>;</l>
        <l id="s15:l3" met="4" type="-+">Een yder in sijn eygen <rhyme label="b" type="m">soort</rhyme>,</l>
        <l id="s15:l4" met="4" type="-+">Brenght nogh veel onderscheyden <rhyme label="b" type="m" corresp="#s15:l3">voort</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Dogh boven al den mensch <rhyme label="a" type="m">uytmunt</rhyme>,</l>
        <l id="s16:l2" met="4" type="-+">Die welke Godt nogh heeft <rhyme label="a" type="m" corresp="#s16:l1">gegunt</rhyme>,</l>
        <l id="s16:l3" met="4" type="-+">Een ziel met reedlijkheydt <rhyme label="b" type="m">verciert</rhyme>,</l>
        <l id="s16:l4" met="4" type="-+">Die onderscheydt hem van 't <rhyme label="b" type="m" corresp="#s16:l3">gediert</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">De Engelen sijn niet dan <rhyme label="a" type="m">geest</rhyme>,</l>
        <l id="s17:l2" met="4" type="-+">Dus scheelen die noch <rhyme label="a" type="m" corresp="#s17:l1">aldermeest</rhyme>,</l>
        <l id="s17:l3" met="4" type="-+">Sy sijn heel vry van 't aerdtsche <rhyme label="b" type="m">stof</rhyme>,</l>
        <l id="s17:l4" met="4" type="-+">Waer door de menschen sijn soo <rhyme label="b" type="m" corresp="#s17:l3">grof</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">O mensch! gebruykt togh eens <rhyme label="a" type="m">verstandt</rhyme>,</l>
        <l id="s18:l2" met="4" type="-+">Siet of gy oyt twee menschen <rhyme label="a" type="m" corresp="#s18:l1">vandt</rhyme>,</l>
        <l id="s18:l3" met="4" type="-+">Die waren sonder <rhyme label="b" type="m">onderscheydt</rhyme>,</l>
        <l id="s18:l4" met="4" type="-+">Denkt soo om Godts <rhyme label="b" type="m" corresp="#s18:l3">vernuftigheydt</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">De schoonheyt van de <rhyme label="a" type="m">schepselen</rhyme>,</l>
        <l id="s19:l2" met="4" type="-+">Die ons wel doet <rhyme label="a" type="m" corresp="#s19:l1">verwonderen</rhyme>,</l>
        <l id="s19:l3" met="4" type="-+">Die doet aen ons genoegh <rhyme label="b" type="m">betoon</rhyme>,</l>
        <l id="s19:l4" met="4" type="-+">Dat Godt den Schepper is seer <rhyme label="b" type="m" corresp="#s19:l3">schoon</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">Aensiet des Hemels wijde <rhyme label="a" type="m">pleyn</rhyme>,</l>
        <l id="s20:l2" met="4" type="-+">Aensiet het Aerdtrijk al is't <rhyme label="a" type="m" corresp="#s20:l1">kleyn</rhyme>,</l>
        <l id="s20:l3" met="4" type="-+">In welke ook haer minste <rhyme label="b" type="m">leedt</rhyme>,</l>
        <l id="s20:l4" met="4" type="-+">Vertoont ons hare schoonheydt <rhyme label="b" type="m" corresp="#s20:l3">meed'</rhyme>.</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="4" type="-+">Plukt maer een struykjen van het <rhyme label="a" type="m">veldt</rhyme>,</l>
        <l id="s21:l2" met="4" type="-+">De aderkens en takjens <rhyme label="a" type="m" corresp="#s21:l1">telt</rhyme>:</l>
        <l id="s21:l3" met="4" type="-+">Plukt van de boomkens maer een <rhyme label="b" type="m">bladt</rhyme>,</l>
        <l id="s21:l4" met="4" type="-+">Veel schoonheyds mooght gy kijken <rhyme label="b" type="m" corresp="#s21:l3">radt</rhyme>.</l>
      </lg>
      <lg id="s22" type="stanza">
        <l id="s22:l1" met="4" type="-+">Aenmerkt noch zijne <rhyme label="a" type="m">goedigheydt</rhyme>,</l>
        <l id="s22:l2" met="4" type="-+">Die al zijn schepsels spijs <rhyme label="a" type="m" corresp="#s22:l1">bereydt</rhyme>,</l>
        <l id="s22:l3" met="4" type="-+">Van al haer nootdruft wel <rhyme label="b" type="m">voorsiet</rhyme>,</l>
        <l id="s22:l4" met="4" type="-+">Op dat daer geene gae te <rhyme label="b" type="m" corresp="#s22:l3">niet</rhyme>.</l>
      </lg>
      <lg id="s23" type="stanza">
        <l id="s23:l1" met="4" type="-+">Gedankt, gelooft gy wesen <rhyme label="a" type="m">moet</rhyme>,</l>
        <l id="s23:l2" met="4" type="-+">Waerachtigh Godt, ons Schepper <rhyme label="a" type="m" corresp="#s23:l1">goedt</rhyme>,</l>
        <l id="s23:l3" met="4" type="-+">Die over-alle zijt <rhyme label="b" type="m">present</rhyme>,</l>
        <l id="s23:l4" met="4" type="-+">Ghy u ons hebt gemaekt <rhyme label="b" type="m" corresp="#s23:l3">bekent</rhyme>.</l>
      </lg>
      <lg id="s24" type="stanza">
        <l id="s24:l1" met="4" type="-+">Wy bidden, wilt ons geven <rhyme label="a" type="m">voort</rhyme>,</l>
        <l id="s24:l2" met="4" type="-+">Dat wy u dienen als't <rhyme label="a" type="m" corresp="#s24:l1">behoort</rhyme>:</l>
        <l id="s24:l3" met="4" type="-+">Op dat wy u in 't <rhyme label="b" type="m">Hemelrijk</rhyme></l>
        <l id="s24:l4" met="4" type="-+">Lof mogen singen <rhyme label="b" type="m" corresp="#s24:l3">eeuwighlijk</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

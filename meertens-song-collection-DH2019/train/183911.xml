  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Op, ô Broedren, naar den <rhyme label="a" type="f">tempel</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Reeds bestraalt de dag zijn' <rhyme label="a" type="f" corresp="#s1:l1">drempel</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Die ons allen saâm <rhyme label="b" type="m">verbond</rhyme>:</l>
        <l id="s1:l4" met="4" type="+-">Schaart om 't outer u in 't <rhyme label="b" type="m" corresp="#s1:l3">rond</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Zingt allen, zingt juigchend in <rhyme label="c" type="f">chooren</rhyme>:</l>
        <l id="s1:l6" met="3" type="-+">Dat zelfs nog de naneeven <rhyme label="c" type="f" corresp="#s1:l5">hooren</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">En voelen in bruischend <rhyme label="d" type="m">gezang</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Deze dag schonk den <rhyme label="a" type="f">gewijden</rhyme></l>
        <l id="s2:l2" met="4" type="+-">'t Geen de nagt van vroeger <rhyme label="a" type="f" corresp="#s2:l1">tijden</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">In zijn' eeuwig donkren <rhyme label="b" type="m">schoot</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Als een diep geheim <rhyme label="b" type="m" corresp="#s2:l3">besloot</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Zingt allen, zingt juigchend in <rhyme label="c" type="f">chooren</rhyme>:</l>
        <l id="s2:l6" met="3" type="-+">Dat zelfs nog de naneeven <rhyme label="c" type="f" corresp="#s2:l5">hooren</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">En voelen in bruischend <rhyme label="d" type="m">gezang</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Ongesluiërd rees de <rhyme label="a" type="f">waarheid</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Uit dien nagt, in <rhyme label="a" type="f" corresp="#s3:l1">hemel-klaarheid</rhyme>;</l>
        <l id="s3:l3" met="4" type="+-">Daar een stille <rhyme label="b" type="m">huivering</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Elk gevoelig hart <rhyme label="b" type="m" corresp="#s3:l3">beving</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Zingt allen, zingt juigchend in <rhyme label="c" type="f">chooren</rhyme>:</l>
        <l id="s3:l6" met="3" type="-+">Dat zelfs nog de naneeven <rhyme label="c" type="f" corresp="#s3:l5">hooren</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">En voelen in bruischend <rhyme label="d" type="m">gezang</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">'t Driest vooröordeel moest <rhyme label="a" type="f">verdwijnen</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Voor den glans, dien zij deed <rhyme label="a" type="f" corresp="#s4:l1">schijnen</rhyme>;</l>
        <l id="s4:l3" met="4" type="+-">En zijn blinde <rhyme label="b" type="m">slaavendrom</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Volgde beevend van <rhyme label="b" type="m" corresp="#s4:l3">rondsöm</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Zingt allen, zingt juigchend in <rhyme label="c" type="f">chooren</rhyme>:</l>
        <l id="s4:l6" met="3" type="-+">Dat zelfs nog de naneeven <rhyme label="c" type="f" corresp="#s4:l5">hooren</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">En voelen in bruischend <rhyme label="d" type="m">gezang</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Dag, den Metslaar eeuwig <rhyme label="a" type="f">heilig</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Door u straalt het licht thans <rhyme label="a" type="f" corresp="#s5:l1">veilig</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Dat de wijsheid, uit den <rhyme label="b" type="m">nagt</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Ons tot heil, heeft <rhyme label="b" type="m" corresp="#s5:l3">voortgebragt</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Zingt allen, zingt juigchend in <rhyme label="c" type="f">chooren</rhyme>:</l>
        <l id="s5:l6" met="3" type="-+">Dat zelfs nog de naneeven <rhyme label="c" type="f" corresp="#s5:l5">hooren</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">En voelen in bruischend <rhyme label="d" type="m">gezang</rhyme>.</l>
      </lg>
    </lg>
  </text>

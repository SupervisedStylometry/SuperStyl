  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">GElukkig is 't <rhyme label="a" type="m">gemoet</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Waar in de deugden <rhyme label="b" type="f">wonen</rhyme>;</l>
        <l id="s1:l3" met="3" type="-+">Ik schat het meerder <rhyme label="a" type="m" corresp="#s1:l1">goet</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Dan Vorstelijke <rhyme label="b" type="f" corresp="#s1:l2">kronen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Wat troost het ymands <rhyme label="a" type="m">ziel</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Die 't sterven ziet voor <rhyme label="b" type="f">handen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">En voelt sijn levens <rhyme label="a" type="m" corresp="#s2:l1">ziel</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Aan Laethaas oever <rhyme label="b" type="f" corresp="#s2:l2">stranden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Dan hoopt hy op den <rhyme label="a" type="m">loon</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">De deugt, voor lang <rhyme label="b" type="f">beschooren</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Op 's Hemels <rhyme label="a" type="m" corresp="#s3:l1">vreugde-kroon</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Als Godes <rhyme label="b" type="f" corresp="#s3:l2">uytverkooren</rhyme>.</l>
      </lg>
    </lg>
  </text>

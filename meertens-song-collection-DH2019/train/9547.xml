  <author>Hendrick Jansz. Prins</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">LOf den Lover, eer den <rhyme label="a" type="f">Eerder</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Tot vergeldingh <rhyme label="b" type="m">toe-behoort</rhyme>;</l>
        <l id="s1:l3" met="4" type="+-">Lof, maeckt lovers, eere <rhyme label="a" type="f" corresp="#s1:l1">weerder</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Liefd' set lievers liefde <rhyme label="b" type="m" corresp="#s1:l2">voort</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">O Vriendinne, <rhyme label="a" type="f">lieflijckheden</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Hebben u, die <rhyme label="b" type="m">neder-seeght</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Om tot mijnen lof te <rhyme label="a" type="f" corresp="#s2:l1">treden</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Hert en mond' met een <rhyme label="b" type="m" corresp="#s2:l2">beweeght</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">verss. 1   Want gelijck een open <rhyme label="a" type="f">Roose</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Of een Lely in het <rhyme label="b" type="m">dal</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Staen te Saron in het <rhyme label="a" type="f" corresp="#s3:l1">bloose</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Soo geef ick een <rhyme label="b" type="m" corresp="#s3:l2">wel-geval</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Daerom ghy my komt te <rhyme label="a" type="f">vooren</rhyme></l>
        <l id="s4:l2" met="4" type="+-">By des werelts <rhyme label="b" type="m">Dochteren</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Als een Lely onder <rhyme label="a" type="f" corresp="#s4:l1">Dooren</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Met uw' geurs <rhyme label="b" type="m" corresp="#s4:l2">ontnochteren</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Even als by wilde <rhyme label="a" type="f">boomen</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Aen een <rhyme label="b" type="m">open-luchtse-kant</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Boven allen <rhyme label="a" type="f" corresp="#s5:l1">uyt-ghenomen</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Is een Appel-boom <rhyme label="b" type="m" corresp="#s5:l2">geplant</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Soo mijn Liefste by de <rhyme label="a" type="f">Sonen</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Van de menschen boven <rhyme label="b" type="m">sweeft</rhyme>;</l>
        <l id="s6:l3" met="4" type="+-">Ick heb grooten lust te <rhyme label="a" type="f" corresp="#s6:l1">woonen</rhyme></l>
        <l id="s6:l4" met="4" type="+-">By het geen sijn schaduw' <rhyme label="b" type="m" corresp="#s6:l2">geeft</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Sijne vrucht als <rhyme label="a" type="f">Honighraten</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Is van aenghename <rhyme label="b" type="m">smaeck</rhyme>:</l>
        <l id="s7:l3" met="4" type="+-">Hy ontsteeckt de volle <rhyme label="a" type="f" corresp="#s7:l1">vaten</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Sijner Wijnen tot <rhyme label="b" type="m" corresp="#s7:l2">vermaeck</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">En noch laet hy <rhyme label="a" type="f">liefds-baniere</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Opgesteken, <rhyme label="b" type="m">uyt-gestreckt</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Over mijnen Ziele <rhyme label="a" type="f" corresp="#s8:l1">swieren</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Die my, tot en aen hem <rhyme label="b" type="m" corresp="#s8:l2">treckt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Op dan blijder maren <rhyme label="a" type="f">Boden</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Eygent my beloften <rhyme label="b" type="m">toe</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Van des Levens-boom, in <rhyme label="a" type="f" corresp="#s9:l1">nooden</rhyme>;</l>
        <l id="s9:l4" met="4" type="+-">Want ick lust, en weet niet <rhyme label="b" type="m" corresp="#s9:l2">hoe</rhyme>?</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Ondersteunet met de <rhyme label="a" type="f">Flessen</rhyme>,</l>
        <l id="s10:l2" met="4" type="+-">En met App'len my <rhyme label="b" type="m">versterckt</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Om mijn heyls-verlangh te <rhyme label="a" type="f" corresp="#s10:l1">lesschen</rhyme></l>
        <l id="s10:l4" met="4" type="+-">Want de liefde kranckheyt <rhyme label="b" type="m" corresp="#s10:l2">werckt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Van mijn Salighmakers <rhyme label="a" type="f">handen</rhyme></l>
        <l id="s11:l2" met="4" type="+-">Stutter eene my het <rhyme label="b" type="m">hooft</rhyme>,</l>
        <l id="s11:l3" met="4" type="+-">d' Ander my omhelse; <rhyme label="a" type="f" corresp="#s11:l1">branden</rhyme></l>
        <l id="s11:l4" met="4" type="+-">Laet de liefd', die 'k heb <rhyme label="b" type="m" corresp="#s11:l2">gelooft</rhyme></l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">O Jerusalemsche <rhyme label="a" type="f">Docht'ren</rhyme>,</l>
        <l id="s12:l2" met="4" type="+-">Ick besweer u by den <rhyme label="b" type="m">Rheen</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">By de Hinden; dat het <rhyme label="a" type="f" corresp="#s12:l1">tochtren</rhyme></l>
        <l id="s12:l4" met="4" type="+-">Onser liefd' heb hinder <rhyme label="b" type="m" corresp="#s12:l2">geen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Dat is mijnes Liefstes <rhyme label="a" type="f">stemme</rhyme>,</l>
        <l id="s13:l2" met="4" type="+-">Springend', huppelend' hy <rhyme label="b" type="m">komt</rhyme></l>
        <l id="s13:l3" met="4" type="+-">Over Bergh en heuvel <rhyme label="a" type="f" corresp="#s13:l1">bremme</rhyme>,</l>
        <l id="s13:l4" met="4" type="+-">Dat ick niet en blijf <rhyme label="b" type="m" corresp="#s13:l2">verstomt</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">Hy is als een Welp der <rhyme label="a" type="f">Herten</rhyme>,</l>
        <l id="s14:l2" met="4" type="+-">Achter onse muur hy <rhyme label="b" type="m">staet</rhyme>,</l>
        <l id="s14:l3" met="4" type="+-">Kijckt door tralien, O <rhyme label="a" type="f" corresp="#s14:l1">perten</rhyme>!</l>
        <l id="s14:l4" met="4" type="+-">Ia, de venster open <rhyme label="b" type="m" corresp="#s14:l2">gaet</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="+-">'k Hoor geroep, Staet op <rhyme label="a" type="f">Vriendinne</rhyme>,</l>
        <l id="s15:l2" met="4" type="+-">O ghy Schoone, kom tot <rhyme label="b" type="m">my</rhyme>,</l>
        <l id="s15:l3" met="4" type="+-">Schrander op uw' hert en <rhyme label="a" type="f" corresp="#s15:l1">sinne</rhyme>,</l>
        <l id="s15:l4" met="4" type="+-">Siet de Winter is <rhyme label="b" type="m" corresp="#s15:l2">voor-by</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="+-">Plasse-regenen, <rhyme label="a" type="f">ghevallen</rhyme>,</l>
        <l id="s16:l2" met="4" type="+-">Zijn al over, <rhyme label="b" type="m">wegh-ghegaen</rhyme>.</l>
        <l id="s16:l3" met="4" type="+-">Sie de Bloemen, hoor het <rhyme label="a" type="f" corresp="#s16:l1">schallen</rhyme></l>
        <l id="s16:l4" met="4" type="+-">Van de Tortel-duyven <rhyme label="b" type="m" corresp="#s16:l2">aen</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="+-">Sie de Vijge-boomse <rhyme label="a" type="f">vruchten</rhyme></l>
        <l id="s17:l2" met="4" type="+-">Staen gerist, getotst, <rhyme label="b" type="m">gestopt</rhyme>,</l>
        <l id="s17:l3" met="4" type="+-">En de Wijn-stocks goede <rhyme label="a" type="f" corresp="#s17:l1">luchten</rhyme></l>
        <l id="s17:l4" met="4" type="+-">Hebben reucken <rhyme label="b" type="m" corresp="#s17:l2">ingepropt</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="+-">Kom dan lieve, mijne <rhyme label="a" type="f">Duyve</rhyme>,</l>
        <l id="s18:l2" met="4" type="+-">Gae niet langer in de <rhyme label="b" type="m">kloof</rhyme></l>
        <l id="s18:l3" met="4" type="+-">Van de Rotsen hene <rhyme label="a" type="f" corresp="#s18:l1">snuyven</rhyme>:</l>
        <l id="s18:l4" met="4" type="+-">Wacker, wacker in 't <rhyme label="b" type="m" corresp="#s18:l2">gheloof</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="+-">Toon my, toon my, uw' <rhyme label="a" type="f">gedaente</rhyme>,</l>
        <l id="s19:l2" met="4" type="+-">Doe my hooren uwe <rhyme label="b" type="m">stem</rhyme>,</l>
        <l id="s19:l3" met="4" type="+-">Daer is nu een vry <rhyme label="a" type="f" corresp="#s19:l1">ghebaente</rhyme></l>
        <l id="s19:l4" met="4" type="+-">Van verdruckers diepe <rhyme label="b" type="m" corresp="#s19:l2">klem</rhyme></l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="+-">Vangh de Vossen, kleyne <rhyme label="a" type="f">Vossen</rhyme>,</l>
        <l id="s20:l2" met="4" type="+-">Waeck, en wraeck het <rhyme label="b" type="m">sluyp-verderf</rhyme>,</l>
        <l id="s20:l3" met="4" type="+-">Van des Wijngaerts teere <rhyme label="a" type="f" corresp="#s20:l1">trossen</rhyme>,</l>
        <l id="s20:l4" met="4" type="+-">Datter geene jongh en <rhyme label="b" type="m" corresp="#s20:l2">sterf</rhyme>.</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="4" type="+-">Ey! wel aen, mijn Lief is <rhyme label="a" type="f">mijne</rhyme></l>
        <l id="s21:l2" met="4" type="+-">Boven op de <rhyme label="b" type="m">Lely-weyd'</rhyme>,</l>
        <l id="s21:l3" met="4" type="+-">En ick wederom de <rhyme label="a" type="f" corresp="#s21:l1">sijne</rhyme>:</l>
        <l id="s21:l4" met="4" type="+-">Vlied' dan Werelt, Duyvel <rhyme label="b" type="m" corresp="#s21:l2">Scheyd'</rhyme>.</l>
      </lg>
      <lg id="s22" type="stanza">
        <l id="s22:l1" met="4" type="+-">Dat de klare dagh <rhyme label="a" type="f">genake</rhyme>,</l>
        <l id="s22:l2" met="4" type="+-">Dat de schaduws hene <rhyme label="b" type="m">vlien</rhyme>.</l>
        <l id="s22:l3" met="4" type="+-">Kom mijn Lief, naer u ick <rhyme label="a" type="f" corresp="#s22:l1">hake</rhyme>,</l>
        <l id="s22:l4" met="4" type="+-">Werdt gelijck een Rhee <rhyme label="b" type="m" corresp="#s22:l2">gesien</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

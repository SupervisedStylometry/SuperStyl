  <author>Hendrik Rintjes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Ghy die in Godt zijt <rhyme label="a" type="f">ghebooren</rhyme>:</l>
        <l id="s1:l2" met="3" type="-+">Draeght oock sijn wapens <rhyme label="b" type="m">mee</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Liefd’ vriendlijckheyt en <rhyme label="b" type="m" corresp="#s1:l2">vree</rhyme>:</l>
        <l id="s1:l4" met="4" type="-+">En kleedt u als sijn <rhyme label="a" type="f" corresp="#s1:l1">uyt-verkooren</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Met oodmoedt en <rhyme label="c" type="f">mee-lijden</rhyme>:</l>
        <l id="s1:l6" met="3" type="-+">Niet in de pracht van <rhyme label="c" type="f" corresp="#s1:l5">zijden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Aen ‘t uyterlijck ist niet <rhyme label="a" type="f">gheleghen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">‘t Uyt-wendigh is maer <rhyme label="b" type="m">schijn</rhyme>.</l>
        <l id="s2:l3" met="3" type="-+">Godt wil in ‘ herte <rhyme label="b" type="m" corresp="#s2:l2">zijn</rhyme>:</l>
        <l id="s2:l4" met="4" type="-+">Indien ghy hebt van Godt <rhyme label="a" type="f" corresp="#s2:l1">verkreghen</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Sijn zeghen en <rhyme label="c" type="f">weldaden</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Danckt hem voor zijn <rhyme label="c" type="f" corresp="#s2:l5">ghenaden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Verdraeght een ander sijn <rhyme label="a" type="f">ghebreecken</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">En ‘t geen u wert <rhyme label="b" type="m">misdaen</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Als Christ is voor <rhyme label="b" type="m" corresp="#s3:l2">ghegaen</rhyme>:</l>
        <l id="s3:l4" met="4" type="-+">Wilt niemants quaet met quaden <rhyme label="a" type="f" corresp="#s3:l1">wreeken</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Treckt aen der liefden <rhyme label="c" type="f">zeden</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En haer <rhyme label="c" type="f" corresp="#s3:l5">volkomentheden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Godts woort laet rijklijk in u <rhyme label="a" type="f">woonen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Vol wijsheyt en vol <rhyme label="b" type="m">deught</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Want dits een groote <rhyme label="b" type="m" corresp="#s4:l2">vreught</rhyme>:</l>
        <l id="s4:l4" met="4" type="-+">Hy sal dit goet in u <rhyme label="a" type="f" corresp="#s4:l1">bekroonen</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Dus leert en sticht <rhyme label="c" type="f">malkanderen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Ghy sit of gaet te <rhyme label="c" type="f" corresp="#s4:l5">wandren</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Singht in u herte Gode <rhyme label="a" type="f">Psalmen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Lof-zanghen soet van <rhyme label="b" type="m">toon</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Der deughden hooghste <rhyme label="b" type="m" corresp="#s5:l2">Kroon</rhyme>:</l>
        <l id="s5:l4" met="4" type="-+">Met Liedekens van soete <rhyme label="a" type="f" corresp="#s5:l1">galmen</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">En wilt met heldre <rhyme label="c" type="f">keelen</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Van Gods ghenade <rhyme label="c" type="f" corresp="#s5:l5">queelen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Al wat ghy doet in woordt of <rhyme label="a" type="f">wercken</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Doet sulcx in Christi <rhyme label="b" type="m">naem</rhyme>:</l>
        <l id="s6:l3" met="3" type="-+">Godt en den Vader <rhyme label="b" type="m" corresp="#s6:l2">t’saem</rhyme>:</l>
        <l id="s6:l4" met="4" type="-+">Dan suldy sijne goedheyt <rhyme label="a" type="f" corresp="#s6:l1">mercken</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Dus danckt door hem den <rhyme label="c" type="f">Vader</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Want Godt is niemant <rhyme label="c" type="f" corresp="#s6:l5">nader</rhyme>.</l>
      </lg>
    </lg>
  </text>

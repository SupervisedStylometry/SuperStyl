<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>4288</id>
    <date>
      <year-start>1602</year-start>
      <year-end>1602</year-end>
    </date>
    <tags>
      <tag standard-name="vraaglied" translation="question song">vraaglied</tag>
      <tag standard-name="acrostichon" translation="acrostic song">acrostichon</tag>
    </tags>
    <melody>Ben ik vilein</melody>
    <categories>
      <category translation="formal genres">formele genres</category>
    </categories>
  <author>Pieter Lenaerts van der Goes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">SEeght my <rhyme label="a" type="m">vileyns</rhyme> //</l>
        <l id="s1:l2" met="3" type="-+">Wat schort u mijnder <rhyme label="b" type="m">daet</rhyme> //</l>
        <l id="s1:l3" met="3" type="-+">Omhangt my yet <rhyme label="a" type="m" corresp="#s1:l1">onreyns</rhyme> //</l>
        <l id="s1:l4" met="3" type="-+">Dat ghy u dus <rhyme label="b" type="m" corresp="#s1:l2">gelaet</rhyme> //?</l>
        <l id="s1:l5" met="2" type="-+">Neemt cort <rhyme label="b" type="m" corresp="#s1:l2">beraet</rhyme> //</l>
        <l id="s1:l6" met="3" type="-+">En seght wat my <rhyme label="b" type="m" corresp="#s1:l2">misstaet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Vervloect <rhyme label="a" type="m">gespuys</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">By wien oyt deught <rhyme label="b" type="m">vervroos</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Die in een s'anders <rhyme label="a" type="m" corresp="#s2:l1">cruys</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Lacht, en verblijdt <rhyme label="b" type="m" corresp="#s2:l2">altoos</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Als tongen <rhyme label="b" type="m" corresp="#s2:l2">boos</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">In woorden <rhyme label="b" type="m" corresp="#s2:l2">schaemteloos</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Ruijmt mijnen <rhyme label="a" type="m">plicht</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">En lost my dijn <rhyme label="b" type="m">gespan</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Ick peynste, u <rhyme label="a" type="m" corresp="#s3:l1">beticht</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Den hals van eenen <rhyme label="b" type="m" corresp="#s3:l2">man</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Ontgelden <rhyme label="b" type="m" corresp="#s3:l2">can</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Wat ramp moveert u <rhyme label="b" type="m" corresp="#s3:l2">dan</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Ten zy ghy <rhyme label="a" type="m">berst</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En blijf ick <rhyme label="b" type="m">ongecust</rhyme>:</l>
        <l id="s4:l3" met="3" type="-+">T'sy, hoe ghy pijnt, of <rhyme label="a" type="m" corresp="#s4:l1">perst</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Mijn lief blijft wel <rhyme label="b" type="m" corresp="#s4:l2">gelust</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">En ick <rhyme label="b" type="m" corresp="#s4:l2">robust</rhyme>:</l>
        <l id="s4:l6" met="3" type="-+">Dus stelt u hooft <rhyme label="b" type="m" corresp="#s4:l2">gerust</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">En of ghy <rhyme label="a" type="m">iet</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Causeert, tot mijn <rhyme label="b" type="m">gepijn</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Ghy aerbeyt doch om <rhyme label="a" type="m" corresp="#s5:l1">niet</rhyme>:</l>
        <l id="s5:l4" met="3" type="-+">Dus tempert u <rhyme label="b" type="m" corresp="#s5:l2">fenijn</rhyme></l>
        <l id="s5:l5" met="2" type="-+">Met soeten <rhyme label="b" type="m" corresp="#s5:l2">wijn</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Ten sal geen ander <rhyme label="b" type="m" corresp="#s5:l2">zijn</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Pais, en <rhyme label="a" type="m">acoort</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Wacht ick, ter naester <rhyme label="b" type="m">keer</rhyme>:</l>
        <l id="s6:l3" met="3" type="-+">Blijft vry eeuwich <rhyme label="a" type="m" corresp="#s6:l1">gestoort</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">En wenscht my groot <rhyme label="b" type="m" corresp="#s6:l2">verseer</rhyme>,</l>
        <l id="s6:l5" met="2" type="-+">V sal <rhyme label="b" type="m" corresp="#s6:l2">hertsweer</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Gewerden, duyst mael <rhyme label="b" type="m" corresp="#s6:l2">meer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

    <melody>Aanhoor toch mijn geklaag gij ruiters</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Aegidius Haeffacker</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Gheest, Vertrooster <rhyme label="a" type="m">soet</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">O heyligh Godt vol <rhyme label="b" type="f">eeren</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Wilt nu in ons <rhyme label="a" type="m" corresp="#s1:l1">ghemoet</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Doch met den Vader <rhyme label="a" type="m" corresp="#s1:l1">goet</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">En met den Soone <rhyme label="a" type="m" corresp="#s1:l1">vroedt</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Door 's liefdens snellen <rhyme label="a" type="m" corresp="#s1:l1">vloedt</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Van boven <rhyme label="b" type="f" corresp="#s1:l2">deriveeren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ontsluyt der tonghen <rhyme label="a" type="m">bandt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Laet doch ons hert en <rhyme label="b" type="f">sinnen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Ons krachten en <rhyme label="a" type="m" corresp="#s2:l1">verstandt</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">U prijsen t' elcken <rhyme label="a" type="m" corresp="#s2:l1">kant</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">Verdrijft der sonden <rhyme label="a" type="m" corresp="#s2:l1">schandt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Ontsteeckt der liefden <rhyme label="a" type="m" corresp="#s2:l1">brandt</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Ontvonckt ons naestens <rhyme label="b" type="f" corresp="#s2:l2">minnen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Wy roepen t' uwaerts <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Wilt ons doch, Vader, <rhyme label="b" type="f">hooren</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Die met den Soon vol <rhyme label="a" type="m" corresp="#s3:l1">eer</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En met den Gheeste <rhyme label="a" type="m" corresp="#s3:l1">teer</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Regneert sonder <rhyme label="a" type="m" corresp="#s3:l1">verseer</rhyme>:</l>
        <l id="s3:l6" met="3" type="-+">Doet toch, na ons <rhyme label="a" type="m" corresp="#s3:l1">begheer</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Dat wy eens vreughd <rhyme label="b" type="f" corresp="#s3:l2">oorbooren</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

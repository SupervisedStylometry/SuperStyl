  <author>Dirk Rafaelsz. Camphuysen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DE stercke stormen mogen <rhyme label="a" type="f">blasen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">De blixem strael’ sijn <rhyme label="b" type="m">licht</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">De donder volg’ hem <rhyme label="b" type="m" corresp="#s1:l2">dicht</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Den hagel magh’er onder <rhyme label="a" type="f" corresp="#s1:l1">rasen</rhyme>;</l>
        <l id="s1:l5" met="4" type="-+">’tKan Sions bergh, soo vast <rhyme label="c" type="f">gelegen</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">Al niet <rhyme label="c" type="f" corresp="#s1:l5">bewegen</rhyme>:</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">De ramp die magh verschricklijck <rhyme label="a" type="f">dreygen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Oock magh de heel <rhyme label="b" type="m">natuer</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Sich toonen vol <rhyme label="b" type="m" corresp="#s2:l2">getruer</rhyme></l>
        <l id="s2:l4" met="4" type="-+">En als ten diepe valle <rhyme label="a" type="f" corresp="#s2:l1">neygen</rhyme>;</l>
        <l id="s2:l5" met="4" type="-+">Noch sullen al die Godt <rhyme label="c" type="f">vertrouwen</rhyme></l>
        <l id="s2:l6" met="2" type="-+">Haer vastheydt <rhyme label="c" type="f" corresp="#s2:l5">houwen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">De bergh van Godt ter woonst <rhyme label="a" type="f">verkoren</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Blijft eeuwigh-eeuwigh <rhyme label="b" type="m">staen</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Noyt sal de mensch <rhyme label="b" type="m" corresp="#s3:l2">vergaen</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Die Gode ’thert heeft <rhyme label="a" type="f" corresp="#s3:l1">toe-gesworen</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">In’t Godt-getal blijft hy <rhyme label="c" type="f">geschreven</rhyme></l>
        <l id="s3:l6" met="2" type="-+">Ten wissen <rhyme label="c" type="f" corresp="#s3:l5">leven</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">De vyandt magh vyandlijck <rhyme label="a" type="f">naken</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En poogh’ (ten moordt <rhyme label="b" type="m">gestelt</rhyme>)</l>
        <l id="s4:l3" met="3" type="-+">Met alle <rhyme label="b" type="m" corresp="#s4:l2">krijghs-geweldt</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Sich meester van den muyr te <rhyme label="a" type="f" corresp="#s4:l1">maken</rhyme>;</l>
        <l id="s4:l5" met="4" type="-+">’tIs Salem, rontsom in de <rhyme label="c" type="f">bergen</rhyme>,</l>
        <l id="s4:l6" met="2" type="-+">Een ydel <rhyme label="c" type="f" corresp="#s4:l5">tergen</rhyme>:</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ellende magh de vroom’ <rhyme label="a" type="f">omringen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Hardneckigh <rhyme label="b" type="m">ramp-bescheer</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Tast’ haer na ziel en <rhyme label="b" type="m" corresp="#s5:l2">eer</rhyme>;</l>
        <l id="s5:l4" met="4" type="-+">De Heer, beheerscher aller <rhyme label="a" type="f" corresp="#s5:l1">dingen</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Is om haer heen (o groote <rhyme label="c" type="f">sake</rhyme>!)</l>
        <l id="s5:l6" met="2" type="-+">En doet de <rhyme label="c" type="f" corresp="#s5:l5">wake</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">En schoon, sijn Wijsheydt laet by <rhyme label="a" type="f">tijden</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Den goeden metten <rhyme label="b" type="m">qua’en</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Een selve roede <rhyme label="b" type="m" corresp="#s6:l2">slaen</rhyme>:</l>
        <l id="s6:l4" met="4" type="-+">Sijn goedtheydt raemt een maet in <rhyme label="a" type="f" corresp="#s6:l1">lijden</rhyme>.</l>
        <l id="s6:l5" met="4" type="-+">Een wijl is’t quaedt (en ’theeft sijn <rhyme label="c" type="f">rede</rhyme>)</l>
        <l id="s6:l6" met="2" type="-+">Maer ’thoudt geen <rhyme label="c" type="f" corresp="#s6:l5">stede</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Na harde komen sachte <rhyme label="a" type="f">poosen</rhyme>.</l>
        <l id="s7:l2" met="3" type="-+">De liefd’ hengt geen <rhyme label="b" type="m">verderf</rhyme>.</l>
        <l id="s7:l3" met="3" type="-+">Godt laet der vromen <rhyme label="b" type="m" corresp="#s7:l2">Erf</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Niet onder ’tjuck der <rhyme label="a" type="f" corresp="#s7:l1">goddeloosen</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Om niet in’t spoor van boose <rhyme label="c" type="f">zeden</rhyme></l>
        <l id="s7:l6" met="2" type="-+">Met haer te <rhyme label="c" type="f" corresp="#s7:l5">treden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Der boosen staff sal niet <rhyme label="a" type="f">verouden</rhyme></l>
        <l id="s8:l2" met="3" type="-+">(Al isser blick noch <rhyme label="b" type="m">schijn</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Wanneer het endt sal <rhyme label="b" type="m" corresp="#s8:l2">zijn</rhyme>)</l>
        <l id="s8:l4" met="4" type="-+">Op haer die ’thert deuchdt-vaerdigh <rhyme label="a" type="f" corresp="#s8:l1">houden</rhyme>;</l>
        <l id="s8:l5" met="4" type="-+">Ten end’ sy hun des ondeuchdts <rhyme label="c" type="f">smetten</rhyme></l>
        <l id="s8:l6" met="2" type="-+">Niet aen en <rhyme label="c" type="f" corresp="#s8:l5">setten</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Der boosen by-zijn is <rhyme label="a" type="f">gevaerlijck</rhyme>.</l>
        <l id="s9:l2" met="3" type="-+">Daer kleeft off meer off <rhyme label="b" type="m">min</rhyme>.</l>
        <l id="s9:l3" met="3" type="-+">Daer sluypt te mets wat <rhyme label="b" type="m" corresp="#s9:l2">in</rhyme>.</l>
        <l id="s9:l4" met="4" type="-+">Niet-wel-verselde deuchd’ staet <rhyme label="a" type="f" corresp="#s9:l1">swaerlijck</rhyme>.</l>
        <l id="s9:l5" met="4" type="-+">’tVeel sonden-sien lockt vrome <rhyme label="c" type="f">handen</rhyme></l>
        <l id="s9:l6" met="2" type="-+">uyt vroomheydts <rhyme label="c" type="f" corresp="#s9:l5">banden</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Dit (seg ick) is’t waerom de <rhyme label="a" type="f">Heere</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Op sijn verkoren <rhyme label="b" type="m">tal</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Het juck niet laten <rhyme label="b" type="m" corresp="#s10:l2">sal</rhyme>;</l>
        <l id="s10:l4" met="4" type="-+">Haer heyl ten vordring, hem ter <rhyme label="a" type="f" corresp="#s10:l1">eere</rhyme>.</l>
        <l id="s10:l5" met="4" type="-+">Elck ding sijn nut; soo <rhyme label="c" type="f">’tplagen-senden</rhyme></l>
        <l id="s10:l6" met="2" type="-+">Als <rhyme label="c" type="f" corresp="#s10:l5">’tplagen-enden</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Dit is, o Godt, dit is mijn <rhyme label="a" type="f">wenschen</rhyme>:</l>
        <l id="s11:l2" met="3" type="-+">Doet yeder na hy <rhyme label="b" type="m">doet</rhyme>;</l>
        <l id="s11:l3" met="3" type="-+">Den recht-gesinden, <rhyme label="b" type="m" corresp="#s11:l2">goedt</rhyme>;</l>
        <l id="s11:l4" met="4" type="-+">Maer quaedt zy ’tloon van quade <rhyme label="a" type="f" corresp="#s11:l1">menschen</rhyme></l>
        <l id="s11:l5" met="4" type="-+">Die op verkeerde wegen <rhyme label="c" type="f">wand’len</rhyme></l>
        <l id="s11:l6" met="2" type="-+">En slimheydt <rhyme label="c" type="f" corresp="#s11:l5">hand’len</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Dit is, o Godt, dit is mijn <rhyme label="a" type="f">bede</rhyme>:</l>
        <l id="s12:l2" met="3" type="-+">Doet eeuwlijck eeuwlijck <rhyme label="b" type="m">wel</rhyme></l>
        <l id="s12:l3" met="3" type="-+">Aen ’theyligh <rhyme label="b" type="m" corresp="#s12:l2">Israel</rhyme>;</l>
        <l id="s12:l4" met="4" type="-+">O! dat de lieffelijcke <rhyme label="a" type="f" corresp="#s12:l1">vrede</rhyme></l>
        <l id="s12:l5" met="4" type="-+">Met overvloedt van soeten <rhyme label="c" type="f">zegen</rhyme></l>
        <l id="s12:l6" met="2" type="-+">Haer standt <rhyme label="c" type="f" corresp="#s12:l5">bejegen</rhyme>’.</l>
      </lg>
    </lg>
  </text>
</song>

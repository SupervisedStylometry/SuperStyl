  <author>Albertus Buitendyck</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">WIe dat de <rhyme label="a" type="m">stem</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Van Herc'les eertijdts <rhyme label="b" type="f">hoorden</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Als gebonden quemen tot <rhyme label="a" type="m" corresp="#s1:l1">hem</rhyme>.</l>
        <l id="s1:l4" met="3" type="-+">Met uwe zeyl-steens <rhyme label="b" type="f" corresp="#s1:l2">woorden</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Gesproken, Heer! aen 't bloedigh <rhyme label="c" type="m">autaer</rhyme>;</l>
        <l id="s1:l6" met="4" type="-+">Treckt mijn verstaelt haert; houdt mijn <rhyme label="c" type="m" corresp="#s1:l5">sondaer</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Vast met uw' liefde <rhyme label="b" type="f" corresp="#s1:l2">koorden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Mijn Iesu <rhyme label="a" type="m">goedt</rhyme>!</l>
        <l id="s2:l2" met="3" type="-+">Ghy bidt aen 't kruys <rhyme label="b" type="f">verheven</rhyme>;</l>
        <l id="s2:l3" met="4" type="-+">Voor de bloedt-zuygers van u <rhyme label="a" type="m" corresp="#s2:l1">bloedt</rhyme>:</l>
        <l id="s2:l4" met="3" type="-+">Vader wilt 't haer <rhyme label="b" type="f" corresp="#s2:l2">vergeven</rhyme>;</l>
        <l id="s2:l5" met="4" type="-+">Want sy weten niet wat dat sy <rhyme label="c" type="m">doen</rhyme>.</l>
        <l id="s2:l6" met="4" type="-+">Wilt my u Vader mede <rhyme label="c" type="m" corresp="#s2:l5">versoen</rhyme></l>
        <l id="s2:l7" met="3" type="-+">In 't eynde van mijn <rhyme label="b" type="f" corresp="#s2:l2">leven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">D'een <rhyme label="a" type="m">Moodenaer</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Heeft u, o Heer! <rhyme label="b" type="f">gepresen</rhyme>;</l>
        <l id="s3:l3" met="4" type="-+">Ghy belooft: Ick segh u <rhyme label="a" type="m" corresp="#s3:l1">voorwaer</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Ghy zult noch hede <rhyme label="b" type="f" corresp="#s3:l2">wezen</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Met my in 't geluckigh <rhyme label="c" type="m">Paradijs</rhyme>.</l>
        <l id="s3:l6" met="4" type="-+">Geeft Iesu! dat ick van 't quaedt op <rhyme label="c" type="m" corresp="#s3:l5">rijs</rhyme>;</l>
        <l id="s3:l7" met="3" type="-+">Daer by 't geluck van <rhyme label="b" type="f" corresp="#s3:l2">desen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">U Moeder <rhyme label="a" type="m">trouw</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Met Sint Ian aen 't Cruys <rhyme label="b" type="f">stonden</rhyme>;</l>
        <l id="s4:l3" met="4" type="-+">Door-zeylen uwe zee vol <rhyme label="a" type="m" corresp="#s4:l1">rouw</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Peylen de gront der <rhyme label="b" type="f" corresp="#s4:l2">wonden</rhyme>.</l>
        <l id="s4:l5" met="4" type="-+">Ghy zegt tegens haer: Vrouw ziet u <rhyme label="c" type="m">Kindt</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Tegens Ioannes (van u <rhyme label="c" type="m" corresp="#s4:l5">bemint</rhyme>)</l>
        <l id="s4:l7" met="3" type="-+">Zie u Moeder, <rhyme label="b" type="f" corresp="#s4:l2">terstonde</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Geen troost, o <rhyme label="a" type="m">Heer</rhyme>!</l>
        <l id="s5:l2" met="3" type="-+">Uw' menschelijcke <rhyme label="b" type="f">vaten</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Krijgen; maer droefheydt meer en <rhyme label="a" type="m" corresp="#s5:l1">meer</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">En pijn groot <rhyme label="b" type="f" corresp="#s5:l2">uytter-maten</rhyme>.</l>
        <l id="s5:l5" met="4" type="-+">Ghy roept in u gewilligh <rhyme label="c" type="m">torment</rhyme>:</l>
        <l id="s5:l6" met="4" type="-+">Mijn Godt, mijn Godt, waerom ('t is <rhyme label="c" type="m" corresp="#s5:l5">bekent</rhyme></l>
        <l id="s5:l7" met="3" type="-+">U) hebt ghy mijn <rhyme label="b" type="f" corresp="#s5:l2">verlaten</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Ghy klaeght van <rhyme label="a" type="m">dorst</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Die 't water kan doen <rhyme label="b" type="f">vloeyen</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Uyt 't kaecke-been, of <rhyme label="a" type="m" corresp="#s6:l1">steenen-korst</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Ia, alles moet <rhyme label="b" type="f" corresp="#s6:l2">bespoeyen</rhyme>.</l>
        <l id="s6:l5" met="4" type="-+">Ghy soeckt dat 'k uw' tranen geven <rhyme label="c" type="m">souw</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Dat ick met u kruys, lijden en <rhyme label="c" type="m" corresp="#s6:l5">rouw</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">En saligheyt, moet <rhyme label="b" type="f" corresp="#s6:l2">moeyen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="2" type="-+">Mijn sond', en <rhyme label="a" type="m">schuldt</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Die ick noyt kan <rhyme label="b" type="f">betalen</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Hebt ghy Heer! met u bloedt <rhyme label="a" type="m" corresp="#s7:l1">vervult</rhyme>.</l>
        <l id="s7:l4" met="3" type="-+">Als ick u hoor <rhyme label="b" type="f" corresp="#s7:l2">verhalen</rhyme>.</l>
        <l id="s7:l5" met="4" type="-+">'t Is volbrocht, voor u 'k buygh hart en <rhyme label="c" type="m">kniel</rhyme>.</l>
        <l id="s7:l6" met="4" type="-+">Had ghy Herder niet gekocht mijn <rhyme label="c" type="m" corresp="#s7:l5">ziel</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">In d'Helle ick most <rhyme label="b" type="f" corresp="#s7:l2">dalen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="2" type="-+">Ghy roept, mijn <rhyme label="a" type="m">Godt</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Zoo met u hart als <rhyme label="b" type="f">keele</rhyme>:</l>
        <l id="s8:l3" met="4" type="-+">Vader mijn ziele, tot <rhyme label="a" type="m" corresp="#s8:l1">beslot</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">In uw' handen 'k <rhyme label="b" type="f" corresp="#s8:l2">beveele</rhyme>.</l>
        <l id="s8:l5" met="4" type="-+">Ghy sterft met vreught, beladen met <rhyme label="c" type="m">pijn</rhyme>.</l>
        <l id="s8:l6" met="4" type="-+">Wilt mijn zonden niet gedachtigh <rhyme label="c" type="m" corresp="#s8:l5">zijn</rhyme>:</l>
        <l id="s8:l7" met="3" type="-+">V vreught wilt my mee <rhyme label="b" type="f" corresp="#s8:l2">deele</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="2" type="-+">In mijn hart <rhyme label="a" type="m">prent</rhyme>:</l>
        <l id="s9:l2" met="3" type="-+">Vw' woorden, heyligh <rhyme label="b" type="f">seven</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Die ghy aen 't Kruys voor <rhyme label="a" type="m" corresp="#s9:l1">Testament</rhyme></l>
        <l id="s9:l4" met="3" type="-+">My Iesu! hebt <rhyme label="b" type="f" corresp="#s9:l2">gegeven</rhyme>.</l>
        <l id="s9:l5" met="4" type="-+">Gheeft my, o bloedige <rhyme label="c" type="m">Bruydegom</rhyme>:</l>
        <l id="s9:l6" met="4" type="-+">Dat ick na u keer als <rhyme label="c" type="m" corresp="#s9:l5">Zonne-blom</rhyme></l>
        <l id="s9:l7" met="3" type="-+">Met 't oogh, met 't hart met 't <rhyme label="b" type="f" corresp="#s9:l2">leven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

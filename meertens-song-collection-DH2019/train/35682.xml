    <tags>
      <tag standard-name="heiligenlied" translation="saint song">heiligenlied</tag>
    </tags>
    <melody>De nachtegaal die zong een lied</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Albertus Buitendyck</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">DE <rhyme label="a" type="m">Moordenaer</rhyme></l>
        <l id="s1:l2" met="2" type="-+">Van Christus <rhyme label="a" type="m" corresp="#s1:l1">schaer</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">Saulus <rhyme label="b" type="m">bekent</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Met yver <rhyme label="c" type="m">snoot</rhyme></l>
        <l id="s1:l5" met="2" type="-+">Vervolght, en <rhyme label="c" type="m" corresp="#s1:l4">doodt</rhyme></l>
        <l id="s1:l6" met="2" type="-+">Met zwaer <rhyme label="b" type="m" corresp="#s1:l3">torment</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Die Jesus naem verheven // lof <rhyme label="d" type="f">geven</rhyme>.</l>
        <l id="s1:l8" met="2" type="-+">Was <rhyme label="e" type="m">Capiteyn</rhyme></l>
        <l id="s1:l9" met="2" type="-+">Van groot en <rhyme label="e" type="m" corresp="#s1:l8">kleyn</rhyme>:</l>
        <l id="s1:l10" met="3" type="+-">Die steenighde Sint <rhyme label="d" type="f" corresp="#s1:l7">Steven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Deze Wolf <rhyme label="a" type="m">gram</rhyme></l>
        <l id="s2:l2" met="2" type="-+">Spouwt vyer en <rhyme label="a" type="m" corresp="#s2:l1">vlam</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Zijn werck, zijn <rhyme label="b" type="m">woordt</rhyme></l>
        <l id="s2:l4" met="2" type="-+">Was, roost en <rhyme label="c" type="m">bandt</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Vanght, stoot, kerft, <rhyme label="c" type="m" corresp="#s2:l4">brandt</rhyme>,</l>
        <l id="s2:l6" met="2" type="-+">Vilt en <rhyme label="b" type="m" corresp="#s2:l3">vermoordt</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Als hy na zijn verlangen // <rhyme label="d" type="f">ontfangen</rhyme></l>
        <l id="s2:l8" met="2" type="-+">Had brief by <rhyme label="e" type="m">brief</rhyme></l>
        <l id="s2:l9" met="2" type="-+">Na sijn <rhyme label="e" type="m" corresp="#s2:l8">belief</rhyme></l>
        <l id="s2:l10" met="3" type="+-">Al Christus volck te <rhyme label="d" type="f" corresp="#s2:l7">vangen</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Van 't Hemels <rhyme label="a" type="m">licht</rhyme></l>
        <l id="s3:l2" met="2" type="-+">Wordt sijn <rhyme label="a" type="m" corresp="#s3:l1">gesicht</rhyme></l>
        <l id="s3:l3" met="2" type="-+">Berooft: daer <rhyme label="b" type="m">by</rhyme></l>
        <l id="s3:l4" met="2" type="-+">Wordt ne'er <rhyme label="c" type="m">gevelt</rhyme></l>
        <l id="s3:l5" met="2" type="-+">Met groot <rhyme label="c" type="m" corresp="#s3:l4">gewelt</rhyme>.</l>
        <l id="s3:l6" met="2" type="-+">Wat vervolght <rhyme label="b" type="m" corresp="#s3:l3">ghy</rhyme></l>
        <l id="s3:l7" met="4" type="-+">Mijn, uyt d'Hemel dees woorden // hy <rhyme label="d" type="f">hoorde</rhyme>.</l>
        <l id="s3:l8" met="2" type="-+">Ootmoedigh <rhyme label="e" type="m">seer</rhyme>,</l>
        <l id="s3:l9" met="2" type="-+">Wie zijt ghy <rhyme label="e" type="m" corresp="#s3:l8">Heer</rhyme>,</l>
        <l id="s3:l10" met="3" type="+-">Verschrickt, verbaest, <rhyme label="d" type="f" corresp="#s3:l7">antwoorde</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Iesus ick <rhyme label="a" type="m">ben</rhyme>;</l>
        <l id="s4:l2" met="2" type="-+">Tegen de <rhyme label="a" type="m" corresp="#s4:l1">pen</rhyme></l>
        <l id="s4:l3" met="2" type="-+">Van prickel <rhyme label="b" type="m">hart</rhyme></l>
        <l id="s4:l4" met="2" type="-+">Stoot ghy u <rhyme label="c" type="m">voet</rhyme>;</l>
        <l id="s4:l5" met="2" type="-+">Dat ghy dat <rhyme label="c" type="m" corresp="#s4:l4">doet</rhyme>,</l>
        <l id="s4:l6" met="2" type="-+">'t Brenght u aen <rhyme label="b" type="m" corresp="#s4:l3">smart</rhyme>.</l>
        <l id="s4:l7" met="4" type="-+">Heer! laet ick uw' secreten // nu <rhyme label="d" type="f">weten</rhyme></l>
        <l id="s4:l8" met="2" type="-+">Sprack Saulus <rhyme label="e" type="m">doe</rhyme>.</l>
        <l id="s4:l9" met="2" type="-+">Tot de Stadt <rhyme label="e" type="m" corresp="#s4:l8">toe</rhyme></l>
        <l id="s4:l10" met="3" type="+-">Gaet, Damascus <rhyme label="d" type="f" corresp="#s4:l7">geheete</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Staet, staet op <rhyme label="a" type="m">radt</rhyme></l>
        <l id="s5:l2" met="2" type="-+">Gaet na die <rhyme label="a" type="m" corresp="#s5:l1">Stadt</rhyme>;</l>
        <l id="s5:l3" met="2" type="-+">Hier hoore <rhyme label="b" type="m">zult</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">Wat ghy doen <rhyme label="c" type="m">moet</rhyme></l>
        <l id="s5:l5" met="2" type="-+">Voor 's Hemels <rhyme label="c" type="m" corresp="#s5:l4">goet</rhyme>,</l>
        <l id="s5:l6" met="2" type="-+">En uwe <rhyme label="b" type="m" corresp="#s5:l3">schult</rhyme>.</l>
        <l id="s5:l7" met="4" type="-+">Dese blinde Man leyden // <rhyme label="d" type="f">verscheyden</rhyme>,</l>
        <l id="s5:l8" met="2" type="-+">Drie dagen <rhyme label="e" type="m">toeft</rhyme></l>
        <l id="s5:l9" met="2" type="-+">Niet ziet, noch <rhyme label="e" type="m" corresp="#s5:l8">proeft</rhyme></l>
        <l id="s5:l10" met="3" type="+-">Wat spijs zy hem <rhyme label="d" type="f" corresp="#s5:l7">bereyden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">t' Damascus <rhyme label="a" type="m">was</rhyme></l>
        <l id="s6:l2" met="2" type="-+"><rhyme label="a" type="m" corresp="#s6:l1">Ananias</rhyme>,</l>
        <l id="s6:l3" met="2" type="-+">Minnaer van 't <rhyme label="b" type="m">kruys</rhyme>,</l>
        <l id="s6:l4" met="2" type="-+">d' Heer seyt hem, <rhyme label="c" type="m">gaet</rhyme></l>
        <l id="s6:l5" met="2" type="-+">Na d'rechte <rhyme label="c" type="m" corresp="#s6:l4">straet</rhyme></l>
        <l id="s6:l6" met="2" type="-+">In Iudas <rhyme label="b" type="m" corresp="#s6:l3">huys</rhyme>;</l>
        <l id="s6:l7" met="4" type="-+">Hier zult ghy Saulum vinde // die <rhyme label="d" type="f">blinde</rhyme></l>
        <l id="s6:l8" met="2" type="-+">Aendachtigh <rhyme label="e" type="m">bidt</rhyme>.</l>
        <l id="s6:l9" met="2" type="-+">En weet vry <rhyme label="e" type="m" corresp="#s6:l8">dit</rhyme>,</l>
        <l id="s6:l10" met="3" type="+-">Zal u doode noch <rhyme label="d" type="f" corresp="#s6:l7">binde</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="2" type="-+">Zoo ick, o <rhyme label="a" type="m">Heer</rhyme>!</l>
        <l id="s7:l2" met="2" type="-+">Doe u <rhyme label="a" type="m" corresp="#s7:l1">begeer</rhyme></l>
        <l id="s7:l3" met="2" type="-+">An'ias <rhyme label="b" type="m">sprack</rhyme>:</l>
        <l id="s7:l4" met="2" type="-+">De swaerdste <rhyme label="c" type="m">pijn</rhyme></l>
        <l id="s7:l5" met="2" type="-+">Zal lijde <rhyme label="c" type="m" corresp="#s7:l4">mijn</rhyme></l>
        <l id="s7:l6" met="2" type="-+">Doen met <rhyme label="b" type="m" corresp="#s7:l3">gemack</rhyme>;</l>
        <l id="s7:l7" met="4" type="-+">Zijn Octroy doet nu suchten // en <rhyme label="d" type="f">vluchten</rhyme></l>
        <l id="s7:l8" met="2" type="-+">Uw' schaep en <rhyme label="e" type="m">al</rhyme></l>
        <l id="s7:l9" met="2" type="-+">Van uw' <rhyme label="e" type="m" corresp="#s7:l8">schaep-stal</rhyme>;</l>
        <l id="s7:l10" met="3" type="+-">Wy weten sijn qua <rhyme label="d" type="f" corresp="#s7:l7">vruchten</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="2" type="-+">d' Heer zeyt gaet <rhyme label="a" type="m">he'en</rhyme>,</l>
        <l id="s8:l2" met="2" type="-+">Zonder <rhyme label="a" type="m" corresp="#s8:l1">geween</rhyme></l>
        <l id="s8:l3" met="2" type="-+">Nu is <rhyme label="b" type="m">bequaem</rhyme></l>
        <l id="s8:l4" met="2" type="-+">'t Verkoore <rhyme label="c" type="m">vat</rhyme>,</l>
        <l id="s8:l5" met="2" type="-+">Mijn waerde <rhyme label="c" type="m" corresp="#s8:l4">schat</rhyme></l>
        <l id="s8:l6" met="2" type="-+">Om mijnen <rhyme label="b" type="m" corresp="#s8:l3">naem</rhyme></l>
        <l id="s8:l7" met="4" type="-+">Voor groot en kleyn te dragen // veel <rhyme label="d" type="f">plagen</rhyme></l>
        <l id="s8:l8" met="2" type="-+">Om mijn naem <rhyme label="e" type="m">swaer</rhyme></l>
        <l id="s8:l9" met="2" type="-+">Zal hy daer <rhyme label="e" type="m" corresp="#s8:l8">naer</rhyme></l>
        <l id="s8:l10" met="3" type="+-">Lijde in al zijn <rhyme label="d" type="f" corresp="#s8:l7">dagen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="2" type="-+">An'ias <rhyme label="a" type="m">quam</rhyme></l>
        <l id="s9:l2" met="2" type="-+">Tot Saulum 't <rhyme label="a" type="m" corresp="#s9:l1">Lam</rhyme>,</l>
        <l id="s9:l3" met="2" type="-+">d' Handt op hem <rhyme label="b" type="m">leydt</rhyme></l>
        <l id="s9:l4" met="2" type="-+">d' Heyligh geest <rhyme label="c" type="m">daelt</rhyme>,</l>
        <l id="s9:l5" met="2" type="-+">Paulum <rhyme label="c" type="m" corresp="#s9:l4">bestraelt</rhyme>,</l>
        <l id="s9:l6" met="2" type="-+">Zijn blindtheydt <rhyme label="b" type="m" corresp="#s9:l3">scheydt</rhyme>.</l>
        <l id="s9:l7" met="4" type="-+">Gedoopt, de naem des Heere // komt <rhyme label="d" type="f">leert</rhyme></l>
        <l id="s9:l8" met="2" type="-+">In 't Ioodsche <rhyme label="e" type="m">huys</rhyme>,</l>
        <l id="s9:l9" met="2" type="-+">Seyt dit <rhyme label="e" type="m" corresp="#s9:l8">gespuys</rhyme>:</l>
        <l id="s9:l10" met="3" type="+-">Wilt Godes Zoone <rhyme label="d" type="f" corresp="#s9:l7">eere</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="2" type="-+">Wie dat ghy <rhyme label="a" type="m">zijt</rhyme>,</l>
        <l id="s10:l2" met="2" type="-+">Van dese <rhyme label="a" type="m" corresp="#s10:l1">tijdt</rhyme>,</l>
        <l id="s10:l3" met="2" type="-+">Tot Godt <rhyme label="b" type="m">bekeert</rhyme>,</l>
        <l id="s10:l4" met="2" type="-+">Geen uyt-stel <rhyme label="c" type="m">soeckt</rhyme>;</l>
        <l id="s10:l5" met="2" type="-+">'t Gras, 't Gras <rhyme label="c" type="m" corresp="#s10:l4">vervloeckt</rhyme>;</l>
        <l id="s10:l6" met="2" type="-+">Geen quaet <rhyme label="b" type="m" corresp="#s10:l3">vermeert</rhyme>,</l>
        <l id="s10:l7" met="4" type="-+">d' Heer zal uwe misdaden // <rhyme label="d" type="f">ontladen</rhyme>.</l>
        <l id="s10:l8" met="2" type="-+">Goods wil noch <rhyme label="e" type="m">raedt</rhyme></l>
        <l id="s10:l9" met="2" type="-+">Noyt <rhyme label="e" type="m" corresp="#s10:l8">weder-staet</rhyme>.</l>
        <l id="s10:l10" met="3" type="+-">Betreedt Sint Paulus <rhyme label="d" type="f" corresp="#s10:l7">paden</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="2" type="-+">O Godes <rhyme label="a" type="m">Lam</rhyme>!</l>
        <l id="s11:l2" met="2" type="-+">Maeckt ons soo <rhyme label="a" type="m" corresp="#s11:l1">tam</rhyme>,</l>
        <l id="s11:l3" met="2" type="-+">Dat wy <rhyme label="b" type="m">voortaen</rhyme>,</l>
        <l id="s11:l4" met="2" type="-+">Met lijf noch <rhyme label="c" type="m">geest</rhyme>,</l>
        <l id="s11:l5" met="2" type="-+">Met 't minst noch 't <rhyme label="c" type="m" corresp="#s11:l4">meest</rhyme></l>
        <l id="s11:l6" met="2" type="-+">U niet <rhyme label="b" type="m" corresp="#s11:l3">we'e-staen</rhyme>.</l>
        <l id="s11:l7" met="4" type="-+">Dat wy de zonde haten // <rhyme label="d" type="f">verlaten</rhyme>.</l>
        <l id="s11:l8" met="2" type="-+">Ons hart zoo <rhyme label="e" type="m">raeckt</rhyme>,</l>
        <l id="s11:l9" met="2" type="-+">Dat ghy ons <rhyme label="e" type="m" corresp="#s11:l8">maeckt</rhyme></l>
        <l id="s11:l10" met="3" type="+-">Uw' uytverkooren <rhyme label="d" type="f" corresp="#s11:l7">vaten</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

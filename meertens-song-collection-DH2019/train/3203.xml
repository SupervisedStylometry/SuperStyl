    </categories>
  <author>Anthony Jansen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">DE Sonden baren <rhyme label="a" type="f">plaghen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">En plaghen teelen veel <rhyme label="b" type="m">smart</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">En smerte baert anghstelijck <rhyme label="a" type="f" corresp="#s1:l1">klaghen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En klaghen, ach! dat is soo <rhyme label="b" type="m" corresp="#s1:l2">hart</rhyme>;</l>
        <l id="s1:l5" met="4" type="-+">Te hart dat maeckt de ziel <rhyme label="b" type="m" corresp="#s1:l2">benart</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Benartheydt doet <rhyme label="a" type="f">verdwijnen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Verdwijnen oorsaeckt veel <rhyme label="b" type="m">leet</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Het leet maeckt de Ziele aen 't <rhyme label="a" type="f" corresp="#s2:l1">quijnen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Het quijnen is lastigh en <rhyme label="b" type="m" corresp="#s2:l2">wreedt</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">En wreedt dat maeckt 'et lijden <rhyme label="b" type="m" corresp="#s2:l2">breedt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Het lijden leert <rhyme label="a" type="f">bedencken</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Bedencken baert groot <rhyme label="b" type="m">verdriet</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Verdriet sal de leden <rhyme label="a" type="f" corresp="#s3:l1">verkrencken</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Verkrencken maeckt dat men 't <rhyme label="b" type="m" corresp="#s3:l2">besiet</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">'t Besien en helpt de plaghe <rhyme label="b" type="m" corresp="#s3:l2">niet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">De plaghe sal niet <rhyme label="a" type="f">mind'ren</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Ten zy men de sonden <rhyme label="b" type="m">uyt-dooft</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Ten zy men al't snoode <rhyme label="a" type="f" corresp="#s4:l1">verhind'ren</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Met macht van malkander <rhyme label="b" type="m" corresp="#s4:l2">klooft</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">En van sen voortteelingh <rhyme label="b" type="m" corresp="#s4:l2">berooft</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Het vasten, bidden, <rhyme label="a" type="f">waecken</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Berouw, en <rhyme label="b" type="m">traen-ghestort</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Sal 't alles weer suyver <rhyme label="a" type="f" corresp="#s5:l1">maecken</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Als 't vyerigh be-yvert <rhyme label="b" type="m" corresp="#s5:l2">wordt</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">En dat 'er gheen gheveynstheydt <rhyme label="b" type="m" corresp="#s5:l2">schort</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Godt wil de sulck' <rhyme label="a" type="f">vergheven</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Die met waerachtighe <rhyme label="b" type="m">boet</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Veranderen 't beestelijck <rhyme label="a" type="f" corresp="#s6:l1">leven</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">En vallen in ware <rhyme label="b" type="m" corresp="#s6:l2">ootmoedt</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Hem gantch ootmoedigh neer te <rhyme label="b" type="m" corresp="#s6:l2">voet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Toen David lach <rhyme label="a" type="f">ghevallen</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Doe rechte de boet hem <rhyme label="b" type="m">we'er</rhyme>:</l>
        <l id="s7:l3" met="3" type="-+">Toe Petrus door 't kallen en <rhyme label="a" type="f" corresp="#s7:l1">rallen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Versaeckende sijnen <rhyme label="b" type="m" corresp="#s7:l2">Heer</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Sijn tranen hielpen hem ter <rhyme label="b" type="m" corresp="#s7:l2">eer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">'k Sou meer voorbeelden <rhyme label="a" type="f">vinden</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Maer dese zijn wichtigh en <rhyme label="b" type="m">goedt</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">En konnen de tochten wel <rhyme label="a" type="f" corresp="#s8:l1">binden</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Van ons licht-verleybre <rhyme label="b" type="m" corresp="#s8:l2">ghemoedt</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">'t Gun soo veel snoode sonden <rhyme label="b" type="m" corresp="#s8:l2">voedt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Help, Hemel! die <rhyme label="a" type="f">verwinnen</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Zijt ons een krachtighen <rhyme label="b" type="m">arm</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Help dwinghen ons' ydele <rhyme label="a" type="f" corresp="#s9:l1">sinnen</rhyme>;</l>
        <l id="s9:l4" met="3" type="-+">O! Heylandt! aenhoort ons <rhyme label="b" type="m" corresp="#s9:l2">ghekarm</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">En zijt ons vaste schut en <rhyme label="b" type="m" corresp="#s9:l2">scharm</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

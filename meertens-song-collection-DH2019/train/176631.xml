      <category translation="religion">godsdienst</category>
    </categories>
  <author>Hendrik Rintjes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Broeders en Susters en vreest doch <rhyme label="a" type="m">niet</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Al zijt ghy hier in dit <rhyme label="a" type="m" corresp="#s1:l1">verdriet</rhyme></l>
        <l id="s1:l3" met="2" type="-+">Al om Gods <rhyme label="b" type="m">woort</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Ghy moet doch met ghewelde <rhyme label="a" type="m" corresp="#s1:l1">siet</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Door d’Enghe <rhyme label="b" type="m" corresp="#s1:l3">poort</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Het rijcke der Hemelen lijdt <rhyme label="a" type="m">gewelt</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Ghy zijt nu in de proeve <rhyme label="a" type="m" corresp="#s2:l1">ghestelt</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Als ‘t gout in ‘t <rhyme label="b" type="m">vier</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">De Hayren uws hoofts zijn <rhyme label="a" type="m" corresp="#s2:l1">ghetelt</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Weest <rhyme label="b" type="m" corresp="#s2:l3">goedertier</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Al is het vleesch ghelijck een <rhyme label="a" type="m">glas</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">De Heere kan u stercken <rhyme label="a" type="m" corresp="#s3:l1">ras</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">In uwen <rhyme label="b" type="m">noot</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Blijft dochvolstandich op dit <rhyme label="a" type="m" corresp="#s3:l1">pas</rhyme></l>
        <l id="s3:l5" met="2" type="-+">Tot in den <rhyme label="b" type="m" corresp="#s3:l3">doot</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">En vreest doch niet gy kleyne <rhyme label="a" type="m">schaer</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Het is de rechte waerheyt <rhyme label="a" type="m" corresp="#s4:l1">klaer</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">Zijt dies wel <rhyme label="b" type="m">vroet</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Al vallet hier den vleesche <rhyme label="a" type="m" corresp="#s4:l1">swaer</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Hebt goeden <rhyme label="b" type="m" corresp="#s4:l3">moet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Soo wie vast op den Heer <rhyme label="a" type="m">betrout</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Hy troost haer dick en <rhyme label="a" type="m" corresp="#s5:l1">menichfout</rhyme></l>
        <l id="s5:l3" met="2" type="-+">Door sijnen <rhyme label="b" type="m">Gheest</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Och vrienden, als is ‘t vleesch <rhyme label="a" type="m" corresp="#s5:l1">benout</rhyme></l>
        <l id="s5:l5" met="2" type="-+">Zijt <rhyme label="b" type="m" corresp="#s5:l3">onbevreest</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Laet uwe lichten schijnen <rhyme label="a" type="m">klaer</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Al voor de werelt <rhyme label="a" type="m" corresp="#s6:l1">openbaer</rhyme>,</l>
        <l id="s6:l3" met="2" type="-+">Als ghy sult <rhyme label="b" type="m">staen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Al voor de wreed Tyrannen <rhyme label="a" type="m" corresp="#s6:l1">daer</rhyme>,</l>
        <l id="s6:l5" met="2" type="-+">‘t Oordeel <rhyme label="b" type="m" corresp="#s6:l3">ontfaen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">De groote Stadt is u <rhyme label="a" type="m">bereyt</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Die seer vol alder goede <rhyme label="a" type="m" corresp="#s7:l1">leyt</rhyme>,</l>
        <l id="s7:l3" met="2" type="-+">Treet vromelijck <rhyme label="b" type="m">aen</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Sijn armen zijn wijt op <rhyme label="a" type="m" corresp="#s7:l1">ghespreyt</rhyme></l>
        <l id="s7:l5" met="2" type="-+">Om u <rhyme label="b" type="m" corresp="#s7:l3">t’ontfaen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Blijft tot den eynd volstandigh <rhyme label="a" type="m">sijn</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Soo sal ‘t gheloov behouden <rhyme label="a" type="m" corresp="#s8:l1">zijn</rhyme></l>
        <l id="s8:l3" met="2" type="-+">Bidt ende <rhyme label="b" type="m">waeckt</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Godt en vergheet tot gheen <rhyme label="a" type="m" corresp="#s8:l1">termijn</rhyme>,</l>
        <l id="s8:l5" met="2" type="-+">Die hem <rhyme label="b" type="m" corresp="#s8:l3">ghenaeckt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Al sijn zy rasende, ende <rhyme label="a" type="m">verwoet</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Al om te storten u lieder <rhyme label="a" type="m" corresp="#s9:l1">bloet</rhyme></l>
        <l id="s9:l3" met="2" type="-+">Iae ‘t lichaem <rhyme label="b" type="m">schent</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Ghedenckt dat d’een vleesch d’ander <rhyme label="a" type="m" corresp="#s9:l1">doet</rhyme>,</l>
        <l id="s9:l5" met="2" type="-+">Dat neemt een <rhyme label="b" type="m" corresp="#s9:l3">endt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">‘k Hebt geschonken uyt liefden <rhyme label="a" type="m">stout</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Begheer dat ghy ‘t ten besten <rhyme label="a" type="m" corresp="#s10:l1">hout</rhyme>,</l>
        <l id="s10:l3" met="2" type="-+">Dit kleyn <rhyme label="b" type="m">vermaen</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Gods liefd die nimmermeer <rhyme label="a" type="m" corresp="#s10:l1">verkout</rhyme></l>
        <l id="s10:l5" met="2" type="-+">Sal blijven <rhyme label="b" type="m" corresp="#s10:l3">staen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

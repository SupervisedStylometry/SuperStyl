  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">VVIe int Beschut des Hoochsten <rhyme label="a" type="m">is</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Hem onder GOdt is <rhyme label="b" type="f">gheven</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Die seydt: Ghy HEer mijn Toevlucht <rhyme label="a" type="m" corresp="#s1:l1">bist</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Mijn Godt, mijn Hoop end' <rhyme label="b" type="f" corresp="#s1:l2">Leven</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Van Stricken vry des Duyvels <rhyme label="c" type="m">ghy</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">End' van die Pest seer <rhyme label="d" type="f">schadich</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Sult helpen, end' Verlossen <rhyme label="c" type="m" corresp="#s1:l5">my</rhyme></l>
        <l id="s1:l8" met="3" type="-+">O HEEre GOdt <rhyme label="d" type="f" corresp="#s1:l6">ghenadich</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Met syne Vleughels deckt hy <rhyme label="a" type="m">u</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Op hem sult ghy <rhyme label="b" type="f">Vertrouwen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Gheweldichlijck beschut syn <rhyme label="a" type="m" corresp="#s2:l1">Trouw</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Dat dy by Nacht gheen <rhyme label="b" type="f" corresp="#s2:l2">Grouwen</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Noch droeff Gelaeg' verschricken <rhyme label="c" type="m">mach</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Want hy syn Woort doet <rhyme label="d" type="f">lichten</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Geen pijl, oock (die vliecht door den <rhyme label="c" type="m" corresp="#s2:l5">dach</rhyme>)</l>
        <l id="s2:l8" met="3" type="-+">Dy schade sal <rhyme label="d" type="f" corresp="#s2:l6">aenrichten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Gheen Peste dy beschaden <rhyme label="a" type="m">can</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Die in het duyster <rhyme label="b" type="f">sluypet</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Geen Sieckt noch kranckheyt rueren <rhyme label="a" type="m" corresp="#s3:l1">aen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Die s'middaechs omme <rhyme label="b" type="f" corresp="#s3:l2">cruypet</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Al storver duysent aen dyn <rhyme label="c" type="m">Zijd'</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Thien duysent noch daer <rhyme label="d" type="f">Neffen</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Aen uwe Rechterhant <rhyme label="c" type="m" corresp="#s3:l5">subijt</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">So salt doch dy niet <rhyme label="d" type="f" corresp="#s3:l6">treffen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ghy sult dijn Lust end' <rhyme label="a" type="m">vrolickheyt</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Met uwen Ooghen <rhyme label="b" type="f">schouwen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Aen der Godloosen herten <rhyme label="a" type="m" corresp="#s4:l1">leydt</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Wanneer haer wert <rhyme label="b" type="f" corresp="#s4:l2">vergouwen</rhyme>.</l>
        <l id="s4:l5" met="4" type="-+">Dijn Toeversicht dat is de <rhyme label="c" type="m">HEER</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Die Hoochst' (daer ghy op <rhyme label="d" type="f">bouwet</rhyme>)</l>
        <l id="s4:l7" met="4" type="-+">Die is dijn Toevlucht <rhyme label="c" type="m" corresp="#s4:l5">ymmermeer</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Om dat ghy hem <rhyme label="d" type="f" corresp="#s4:l6">betrouwet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Gheen quaet sal weder varen <rhyme label="a" type="m">dy</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Gheen Plaech dijns Huys sal <rhyme label="b" type="f">rueren</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Want synen Enghelen heeft <rhyme label="a" type="m" corresp="#s5:l1">hy</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Bevolen dy te <rhyme label="b" type="f" corresp="#s5:l2">Vueren</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">En te behoeden, dat sy <rhyme label="c" type="m">Trouw</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Dy op haer handen <rhyme label="d" type="f">draghen</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Dat gheen Steen dyn Voet quetsen <rhyme label="c" type="m" corresp="#s5:l5">sou</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Al nae syn <rhyme label="d" type="f" corresp="#s5:l6">welbehaghen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Op Leeuwen, Adren sult ghy <rhyme label="a" type="m">gaen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">En treden op de <rhyme label="b" type="f">Draecken</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Op Jonghe Leeuwen sult ghy <rhyme label="a" type="m" corresp="#s6:l1">staen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Haer Felheyt t'schanden <rhyme label="b" type="f" corresp="#s6:l2">maecken</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Want gheen Dier dy beschaden <rhyme label="c" type="m">kan</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Dewijl ghy aen hem <rhyme label="d" type="f">houwet</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Gheen sieckte sal hem comen <rhyme label="c" type="m" corresp="#s6:l5">aen</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Die vast op Godt <rhyme label="d" type="f" corresp="#s6:l6">betrouwet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Midts hy my eert van herten <rhyme label="a" type="m">gront</rhyme></l>
        <l id="s7:l2" met="3" type="-+">End' hoopt op myne <rhyme label="b" type="f">goede</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">(Seyt Godt) Daerom ik t'alder <rhyme label="a" type="m" corresp="#s7:l1">stont</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Hem help end' wel <rhyme label="b" type="f" corresp="#s7:l2">Behoede</rhyme>.</l>
        <l id="s7:l5" met="4" type="-+">Ick wil altijdt syn Hulper <rhyme label="c" type="m">zijn</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Dies dat hy mynen <rhyme label="d" type="f">Naem</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">(Daer in hy hem sal Troosten <rhyme label="c" type="m" corresp="#s7:l5">fijn</rhyme>)</l>
        <l id="s7:l8" met="3" type="-+">Recht kendt so dat <rhyme label="d" type="f" corresp="#s7:l6">Betame</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Als synen Godt Aenroept hy <rhyme label="a" type="m">my</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Dies wil ick hem <rhyme label="b" type="f">Verhooren</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">In aller Noot stae ick hem <rhyme label="a" type="m" corresp="#s8:l1">by</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Mijn Hulp sal hy <rhyme label="b" type="f" corresp="#s8:l2">Orbooren</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Tot Eeren ick hem brenghen <rhyme label="c" type="m">wil</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">En Rijckelijck <rhyme label="d" type="f">beloonen</rhyme>,</l>
        <l id="s8:l7" met="4" type="-+">Met een gherust lang' Leven <rhyme label="c" type="m" corresp="#s8:l5">stil</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Mijn Heyl wil ick hem <rhyme label="d" type="f" corresp="#s8:l6">Thoonen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>21274</id>
    <date>
      <year-start>1591</year-start>
      <year-end>1592</year-end>
    </date>
    <tags>
      <tag standard-name="schriftuurlijk lied" translation="scripture song">schriftuurlijk lied</tag>
      <tag standard-name="bespiegelend lied" translation="reflective song">bespiegelend lied</tag>
    </tags>
    <melody>Ik ging nog gisteravond zo heimelijk op een oord</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Soetken Gerijts</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">EEn liet moet ick v <rhyme label="a" type="f">senden</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Wt liefden dese <rhyme label="b" type="m">reys</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Hoe wel wy noyt en <rhyme label="a" type="f" corresp="#s1:l1">kenden</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Malcander na den <rhyme label="b" type="m" corresp="#s1:l2">vleys</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Ick hoop na Paulus woorden <rhyme label="c" type="m">plein</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Dat wy veele te <rhyme label="d" type="f">samen</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Een lichaem zijn <rhyme label="c" type="m" corresp="#s1:l5">ghemeyn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Den Soone gods <rhyme label="a" type="f">verheuen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Die is dat lichaems <rhyme label="b" type="m">hooft</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Sijn leden werden <rhyme label="a" type="f" corresp="#s2:l1">verdreuen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Ghemartelt haer goeden <rhyme label="b" type="m" corresp="#s2:l2">berooft</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Die hem die sorch beueelt is <rhyme label="c" type="m">wijs</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Is dat lichaem niet <rhyme label="d" type="f">beter</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Seyt Christus dan <rhyme label="c" type="m" corresp="#s2:l5">spijs</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Mijn liefste laeten wy hier <rhyme label="a" type="f">soecken</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Dat rijcke Gods voor <rhyme label="b" type="m">al</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Christus die heeft <rhyme label="a" type="f" corresp="#s3:l1">ghesproken</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Siet dat haer worden <rhyme label="b" type="m" corresp="#s3:l2">sal</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Gheworpen toe, hier wel op <rhyme label="c" type="m">siet</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Al dat haer is van <rhyme label="d" type="f">noode</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Hier aen en twijfelt <rhyme label="c" type="m" corresp="#s3:l5">niet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Men vint in veel <rhyme label="a" type="f">manieren</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Al van Gods gracy <rhyme label="b" type="m">claer</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Al doemen moste <rhyme label="a" type="f" corresp="#s4:l1">vieren</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Den acker dat sevenste <rhyme label="b" type="m" corresp="#s4:l2">Jaer</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Leuiticus vijfentwintichste <rhyme label="c" type="m">hoort</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">So bracht dat seste <rhyme label="d" type="f">Jare</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Voor drie Jaer vruchten <rhyme label="c" type="m" corresp="#s4:l5">voort</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Dit is wilt hier op <rhyme label="a" type="f">mercken</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Gheschiet tot onser <rhyme label="b" type="m">leer</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Christus dat hooft der <rhyme label="a" type="f" corresp="#s5:l1">kercken</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Geeft nu zijn Bruyt veel <rhyme label="b" type="m" corresp="#s5:l2">meer</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Een schaduwe heeft die wet <rhyme label="c" type="m">gheweest</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Van den toecomende <rhyme label="d" type="f">goeden</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Al somen claerlijck <rhyme label="c" type="m" corresp="#s5:l5">leest</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Noch cont die Heer wel <rhyme label="a" type="f">spijsen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Veertich Jaren <rhyme label="b" type="m">Israel</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Dit wil ons <rhyme label="a" type="f" corresp="#s6:l1">onderwijsen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Inwendich en wterlijck <rhyme label="b" type="m" corresp="#s6:l2">wel</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Lichamelijck so gheschiede <rhyme label="c" type="m">dat</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Christus seyt dat hy <rhyme label="d" type="f">seluer</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Dat rechte broot is <rhyme label="c" type="m" corresp="#s6:l5">plat</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Veel vinden wy van <rhyme label="a" type="f">desen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Hoe godt de zijne <rhyme label="b" type="m">voet</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Al die den Heere <rhyme label="a" type="f" corresp="#s7:l1">vresen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Ontbreken ghenen <rhyme label="b" type="m" corresp="#s7:l2">goet</rhyme></l>
        <l id="s7:l5" met="4" type="-+">Want die Godtsalighe oeffeninge <rhyme label="c" type="m">heeft</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Beloften van dit <rhyme label="d" type="f">leuen</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Die lieuen Apostel <rhyme label="c" type="m" corresp="#s7:l5">schrijft</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Kinderen op te <rhyme label="a" type="f">voeden</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Tis veel al van een <rhyme label="b" type="m">vrou</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Maer godt can haer <rhyme label="a" type="f" corresp="#s8:l1">ghemoeden</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Wel stercken al zijnse <rhyme label="b" type="m" corresp="#s8:l2">flou</rhyme></l>
        <l id="s8:l5" met="4" type="-+">Die moeder in die <rhyme label="c" type="m">Machabeen</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Heeft niet haer seuen <rhyme label="d" type="f">Soonen</rhyme></l>
        <l id="s8:l7" met="3" type="-+">So vromelijck <rhyme label="c" type="m" corresp="#s8:l5">ghestreen</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Dit slechte neemt in <rhyme label="a" type="f">waerden</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Hier mede groet ick <rhyme label="b" type="m">v</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Laet ons op deser <rhyme label="a" type="f" corresp="#s9:l1">aerden</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Malcander gedencken <rhyme label="b" type="m" corresp="#s9:l2">nu</rhyme></l>
        <l id="s9:l5" met="4" type="-+">Want wy een broot een lichaem <rhyme label="c" type="m">zijn</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Waer op dat wy <rhyme label="d" type="f">ghebruycken</rhyme></l>
        <l id="s9:l7" met="3" type="-+">Dat teycken broot en <rhyme label="c" type="m" corresp="#s9:l5">wijn</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

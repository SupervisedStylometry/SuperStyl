  <author>Hieronymus van Alphen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Uw mond, o Heiland! bleef <rhyme label="a" type="f">gesloten</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Schoon Rigter en getuige <rhyme label="b" type="m">loog</rhyme>;</l>
        <l id="s1:l3" met="4" type="-+">Daar 't woest getier van Juda's <rhyme label="a" type="f" corresp="#s1:l1">Grooten</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Uw stillen boezem niet <rhyme label="b" type="m" corresp="#s1:l2">bewoog</rhyme>.</l>
        <l id="s1:l5" met="3" type="+-">Schoon er stormen <rhyme label="c" type="f">loeiden</rhyme>,</l>
        <l id="s1:l6" met="3" type="+-">Helsche beeken <rhyme label="c" type="f" corresp="#s1:l5">vloeiden</rhyme>,</l>
        <l id="s1:l7" met="3" type="+-">Stond Gij, als een <rhyme label="d" type="m">rots</rhyme>,</l>
        <l id="s1:l8" met="3" type="+-">Hoog en <rhyme label="e" type="f">onbewogen</rhyme>,</l>
        <l id="s1:l9" met="3" type="+-">Voor der menschen <rhyme label="e" type="f" corresp="#s1:l8">oogen</rhyme>,</l>
        <l id="s1:l10" met="3" type="+-">En voor d'englen <rhyme label="d" type="m" corresp="#s1:l7">Gods</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">o Wijs, verheven, moedig <rhyme label="a" type="f">zwijgen</rhyme>!</l>
        <l id="s2:l2" met="4" type="-+">Bij slag op slag; bij wond op <rhyme label="b" type="m">wond</rhyme>.</l>
        <l id="s2:l3" met="4" type="-+">o Onnavolgbaar Gode <rhyme label="a" type="f" corresp="#s2:l1">zwijgen</rhyme>!</l>
        <l id="s2:l4" met="4" type="-+">Waar 't heilig oog geen vlek in <rhyme label="b" type="m" corresp="#s2:l2">vond</rhyme>.</l>
        <l id="s2:l5" met="3" type="+-">Sterker-sprekend <rhyme label="c" type="f">zwijgen</rhyme>!</l>
        <l id="s2:l6" met="3" type="+-">Dan het gillend <rhyme label="c" type="f" corresp="#s2:l5">hijgen</rhyme></l>
        <l id="s2:l7" met="3" type="+-">Naar onschuldig <rhyme label="d" type="m">bloed</rhyme>.</l>
        <l id="s2:l8" met="3" type="+-">God-verzoenend <rhyme label="e" type="f">zwijgen</rhyme>!</l>
        <l id="s2:l9" met="3" type="+-">Gij doet adem <rhyme label="e" type="f" corresp="#s2:l8">krijgen</rhyme>,</l>
        <l id="s2:l10" met="3" type="+-">Aan 't geprangd <rhyme label="d" type="m" corresp="#s2:l7">gemoed</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Maar durft Cajáfas U <rhyme label="a" type="f">bezweeren</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Op zijnen hoogen <rhyme label="b" type="m">priester-toon</rhyme>;</l>
        <l id="s3:l3" met="4" type="-+">Zou langer zwijgen God <rhyme label="a" type="f" corresp="#s3:l1">onteeren</rhyme>;</l>
        <l id="s3:l4" met="4" type="-+">Dan roept Gij luid: Ik ben Gods <rhyme label="b" type="m" corresp="#s3:l2">zoon</rhyme>!</l>
        <l id="s3:l5" met="3" type="+-">En bij 't minzaam <rhyme label="c" type="f">staren</rhyme></l>
        <l id="s3:l6" met="3" type="+-">Op uw <rhyme label="c" type="f" corresp="#s3:l5">lasteraaren</rhyme>,</l>
        <l id="s3:l7" met="3" type="+-">Durft uw <rhyme label="d" type="m">helden-kragt</rhyme></l>
        <l id="s3:l8" met="3" type="+-">'t Hoofd om hoog te <rhyme label="e" type="f">steken</rhyme>,</l>
        <l id="s3:l9" met="3" type="+-">En voorzeggend <rhyme label="e" type="f" corresp="#s3:l8">spreken</rhyme></l>
        <l id="s3:l10" met="3" type="+-">Van uw komst en <rhyme label="d" type="m" corresp="#s3:l7">magt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Gij zaagt, toen, bij 't gevoel van <rhyme label="a" type="f">waarde</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Den grooten eindpaal van uw <rhyme label="b" type="m">loop</rhyme>.</l>
        <l id="s4:l3" met="4" type="-+">God bleef, wat U ontzonk op <rhyme label="a" type="f" corresp="#s4:l1">aarde</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Alleen het anker van uw <rhyme label="b" type="m" corresp="#s4:l2">hoop</rhyme>.</l>
        <l id="s4:l5" met="3" type="+-">Vrienden mogten <rhyme label="c" type="f">vlugten</rhyme>,</l>
        <l id="s4:l6" met="3" type="+-">Graf of boeien <rhyme label="c" type="f" corresp="#s4:l5">dugten</rhyme>;</l>
        <l id="s4:l7" met="3" type="+-">Gij blijft rein en <rhyme label="d" type="m">groot</rhyme>.</l>
        <l id="s4:l8" met="3" type="+-">Wie U hoonen; <rhyme label="e" type="f">vloeken</rhyme>;</l>
        <l id="s4:l9" met="3" type="+-">Uw vernieling <rhyme label="e" type="f" corresp="#s4:l8">zoeken</rhyme>;</l>
        <l id="s4:l10" met="3" type="+-">Gij braveert den <rhyme label="d" type="m" corresp="#s4:l7">dood</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Den naam van Zoon, U eens <rhyme label="a" type="f">gegeven</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Droegt G', als zijn heilig kind, op <rhyme label="b" type="m">aard</rhyme>.</l>
        <l id="s5:l3" met="4" type="-+">Hij was uw roem, en meer dan 't <rhyme label="a" type="f" corresp="#s5:l1">leven</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Uit liefde tot uw Vader, <rhyme label="b" type="m" corresp="#s5:l2">waard</rhyme>.</l>
        <l id="s5:l5" met="3" type="+-">Dragen, dulden, <rhyme label="c" type="f">strijden</rhyme>,</l>
        <l id="s5:l6" met="3" type="+-">En dien naam <rhyme label="c" type="f" corresp="#s5:l5">belijden</rhyme>,</l>
        <l id="s5:l7" met="3" type="+-">Was uw doel en <rhyme label="d" type="m">lust</rhyme>.</l>
        <l id="s5:l8" met="3" type="+-">'t Wit van uwen <rhyme label="e" type="f">Vader</rhyme></l>
        <l id="s5:l9" met="3" type="+-">Lag aan 't hart U <rhyme label="e" type="f" corresp="#s5:l8">nader</rhyme>,</l>
        <l id="s5:l10" met="3" type="+-">Dan uw eer en <rhyme label="d" type="m" corresp="#s5:l7">rust</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Men mogt U lastertaal <rhyme label="a" type="f">verwijten</rhyme>;</l>
        <l id="s6:l2" met="4" type="-+">Met vuist-slag tergen en met <rhyme label="b" type="m">spot</rhyme>;</l>
        <l id="s6:l3" met="4" type="-+">Geveinsd den mantel <rhyme label="a" type="f" corresp="#s6:l1">stukken-rijten</rhyme>;</l>
        <l id="s6:l4" met="4" type="-+">Gij blijft getroost en stil in <rhyme label="b" type="m" corresp="#s6:l2">God</rhyme>.</l>
        <l id="s6:l5" met="3" type="+-">Daar de hoogste <rhyme label="c" type="f">waarde</rhyme></l>
        <l id="s6:l6" met="3" type="+-">Zig verheven <rhyme label="c" type="f" corresp="#s6:l5">paarde</rhyme></l>
        <l id="s6:l7" met="3" type="+-">Met <rhyme label="d" type="m">verloogchening</rhyme>;</l>
        <l id="s6:l8" met="3" type="+-">Zag men schimp en <rhyme label="e" type="f">slagen</rhyme></l>
        <l id="s6:l9" met="3" type="+-">Onbezweken <rhyme label="e" type="f" corresp="#s6:l8">dragen</rhyme></l>
        <l id="s6:l10" met="3" type="+-">Door Gods <rhyme label="d" type="m" corresp="#s6:l7">lieveling</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Hoe blinkt, met onbevlekten <rhyme label="a" type="f">luister</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">o Zonne der <rhyme label="b" type="m">geregtigheid</rhyme>!</l>
        <l id="s7:l3" met="4" type="-+">Uw reine glans bij 't somber <rhyme label="a" type="f" corresp="#s7:l1">duister</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Op deze priesterzaal <rhyme label="b" type="m" corresp="#s7:l2">verspreid</rhyme>.</l>
        <l id="s7:l5" met="3" type="+-">Bergen mogen <rhyme label="c" type="f">zinken</rhyme>!</l>
        <l id="s7:l6" met="3" type="+-">Sterren niet meer <rhyme label="c" type="f" corresp="#s7:l5">blinken</rhyme>,</l>
        <l id="s7:l7" met="3" type="+-">Aan des hemels <rhyme label="d" type="m">trans</rhyme>!</l>
        <l id="s7:l8" met="3" type="+-">Zon van licht en <rhyme label="e" type="f">waarheid</rhyme>!</l>
        <l id="s7:l9" met="3" type="+-">Bron van deugd en <rhyme label="e" type="f" corresp="#s7:l8">klaarheid</rhyme>!</l>
        <l id="s7:l10" met="3" type="+-">Eeuwig rijst uw <rhyme label="d" type="m" corresp="#s7:l7">glans</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Uw ijver was, o <rhyme label="a" type="f">huigchelaaren</rhyme>!</l>
        <l id="s8:l2" met="4" type="-+">Een gruwel in Gods heilig <rhyme label="b" type="m">oog</rhyme>.</l>
        <l id="s8:l3" met="4" type="-+">Uw stem de taal van <rhyme label="a" type="f" corresp="#s8:l1">lasteraaren</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Die 't volk, u aanbetrouwd, <rhyme label="b" type="m" corresp="#s8:l2">bedroog</rhyme>.</l>
        <l id="s8:l5" met="3" type="+-">Laat uw steenen <rhyme label="c" type="f">harten</rhyme></l>
        <l id="s8:l6" met="3" type="+-">Ongevoelig <rhyme label="c" type="f" corresp="#s8:l5">tarten</rhyme></l>
        <l id="s8:l7" met="3" type="+-">'t Vonnis, dat u <rhyme label="d" type="m">wagt</rhyme>;</l>
        <l id="s8:l8" met="3" type="+-">Ach! uw bloed zal <rhyme label="e" type="f">stroomen</rhyme>,</l>
        <l id="s8:l9" met="3" type="+-">Als Hij weêr zal <rhyme label="e" type="f" corresp="#s8:l8">komen</rhyme>,</l>
        <l id="s8:l10" met="3" type="+-">Dien gij thans <rhyme label="d" type="m" corresp="#s8:l7">veragt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Wij knielen juichend; en <rhyme label="a" type="f">aanbidden</rhyme></l>
        <l id="s9:l2" met="4" type="-+">U, groote Christus! gij <rhyme label="b" type="m">belijdt</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Den naam uws Vaders, schoon G', in 't <rhyme label="a" type="f" corresp="#s9:l1">midden</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Van Bazans stieren, eenzaam <rhyme label="b" type="m" corresp="#s9:l2">zijt</rhyme>.</l>
        <l id="s9:l5" met="3" type="+-">U, o Heer der <rhyme label="c" type="f">Heeren</rhyme>!</l>
        <l id="s9:l6" met="3" type="+-">Zal ons hart <rhyme label="c" type="f" corresp="#s9:l5">vereeren</rhyme>,</l>
        <l id="s9:l7" met="3" type="+-">Als Gods <rhyme label="d" type="m">troongenoot</rhyme>.</l>
        <l id="s9:l8" met="3" type="+-">Leer ons willig <rhyme label="e" type="f">strijden</rhyme>!</l>
        <l id="s9:l9" met="3" type="+-">En uw naam <rhyme label="e" type="f" corresp="#s9:l8">belijden</rhyme>,</l>
        <l id="s9:l10" met="3" type="+-">Trouw tot in den <rhyme label="d" type="m" corresp="#s9:l7">dood</rhyme>!</l>
      </lg>
    </lg>
  </text>
</song>

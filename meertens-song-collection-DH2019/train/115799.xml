    <melody>Ik ging nog hedenmorgen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Claes Stapel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ALs wy te regt <rhyme label="a" type="f">aan-merken</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Des Heeren wijs <rhyme label="b" type="m">beleid</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Hoe dat hy al zijn <rhyme label="a" type="f" corresp="#s1:l1">werken</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Doet in <rhyme label="b" type="m" corresp="#s1:l2">geregtigheid</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">En alle ding zeer wel <rhyme label="c" type="m">regeerd</rhyme>;</l>
        <l id="s1:l6" met="3" type="-+">'t Zal onz geloof <rhyme label="d" type="f">versterken</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Als ons het lijden <rhyme label="c" type="m" corresp="#s1:l5">deerd</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Niet kan ons <rhyme label="a" type="f">over-koomen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Of 't komt ons toe van <rhyme label="b" type="m">God</rhyme>;</l>
        <l id="s2:l3" met="3" type="-+">Dus moeten wy niet <rhyme label="a" type="f" corresp="#s2:l1">schrooomen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Voor droefheids strenge <rhyme label="b" type="m" corresp="#s2:l2">lot</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">'t Is goed al wat de goedheid <rhyme label="c" type="m">doet</rhyme>;</l>
        <l id="s2:l6" met="3" type="-+">Ten beste van de <rhyme label="d" type="f">vroomen</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Diend ook de <rhyme label="c" type="m" corresp="#s2:l5">teegen-spoed</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Dat God ons komt <rhyme label="a" type="f">kastijden</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Is regte Vaaders <rhyme label="b" type="m">aart</rhyme>;</l>
        <l id="s3:l3" met="3" type="-+">En 't is blij-endig <rhyme label="a" type="f" corresp="#s3:l1">lijden</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Dat waare vreugde <rhyme label="b" type="m" corresp="#s3:l2">baard</rhyme>:</l>
        <l id="s3:l5" met="4" type="-+">Laat ons maar toonen <rhyme label="c" type="m">lijdzaamheid</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Ons naakt gewis <rhyme label="d" type="f">verblijden</rhyme>;</l>
        <l id="s3:l7" met="3" type="-+">God heeft het <rhyme label="c" type="m" corresp="#s3:l5">toe-gezeid</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">En laat ons regt <rhyme label="a" type="f">bedenken</rhyme></l>
        <l id="s4:l2" met="3" type="-+">De lijdzaamheid van <rhyme label="b" type="m">Iob</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">En al die God gaat <rhyme label="a" type="f" corresp="#s4:l1">schenken</rhyme></l>
        <l id="s4:l4" met="3" type="-+">De worst'ling van <rhyme label="b" type="m" corresp="#s4:l2">Iacob</rhyme>.</l>
        <l id="s4:l5" met="4" type="-+">O 't is de beste <rhyme label="c" type="m">medicijn</rhyme>!</l>
        <l id="s4:l6" met="3" type="-+">Die 't vlees wel schijnt te <rhyme label="d" type="f">krenken</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Maar 't werd ziels zoete <rhyme label="c" type="m" corresp="#s4:l5">Wijn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Regt kan Gods woord dit <rhyme label="a" type="f">toonen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Exemp'len zijnder <rhyme label="b" type="m">veel</rhyme>;</l>
        <l id="s5:l3" met="3" type="-+">Maar Gods wel lieve <rhyme label="a" type="f" corresp="#s5:l1">Zoone</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Een voor-beeld is <rhyme label="b" type="m" corresp="#s5:l2">geheel</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Die door volmaakte <rhyme label="c" type="m">lijdzaamheid</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Verworven heeft de <rhyme label="d" type="f">kroone</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Vol glans en <rhyme label="c" type="m" corresp="#s5:l5">heerlijkheid</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">In Hem wy <rhyme label="a" type="f">over-winnen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Al 't lijdens groot <rhyme label="b" type="m">geweld</rhyme>.</l>
        <l id="s6:l3" met="3" type="-+">De lijdzaamheid van <rhyme label="a" type="f" corresp="#s6:l1">binnen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Maakt uitterlijk een <rhyme label="b" type="m" corresp="#s6:l2">held</rhyme>.</l>
        <l id="s6:l5" met="4" type="-+">O! 't is een held en sterke <rhyme label="c" type="m">Man</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Die met vernieuwde <rhyme label="d" type="f">zinnen</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Al 't quaad verwinnen <rhyme label="c" type="m" corresp="#s6:l5">kan</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Zal iemand dan <rhyme label="a" type="f">beswijken</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Als een met <rhyme label="b" type="m">onderscheid</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Zijn booz gemoed laat <rhyme label="a" type="f" corresp="#s7:l1">blijken</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Aan hem door <rhyme label="b" type="m" corresp="#s7:l2">toornigheid</rhyme>?</l>
        <l id="s7:l5" met="4" type="-+">O neen! Wy moeten vastlijk <rhyme label="c" type="m">staan</rhyme>;</l>
        <l id="s7:l6" met="3" type="-+">In 't quaad hem niet <rhyme label="d" type="f">gelijken</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Maar met goe re'en <rhyme label="c" type="m" corresp="#s7:l5">aan-gaan</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">In 't quaade te <rhyme label="a" type="f">verdraagen</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Daar leid de sterkheid <rhyme label="b" type="m">in</rhyme>:</l>
        <l id="s8:l3" met="3" type="-+">Niet om malka'er te <rhyme label="a" type="f" corresp="#s8:l1">jaagen</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Met een verbolgen <rhyme label="b" type="m" corresp="#s8:l2">zin</rhyme>.</l>
        <l id="s8:l5" met="4" type="-+">O! dat is geen vernieuwd <rhyme label="c" type="m">gemoed</rhyme>!</l>
        <l id="s8:l6" met="3" type="-+">De Heer die wil hem <rhyme label="d" type="f">plaagen</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Die zelve wrake <rhyme label="c" type="m" corresp="#s8:l5">doet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Kom laat ons met <rhyme label="a" type="f">gebeeden</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Aanhouden by den <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">En met geboogen <rhyme label="a" type="f" corresp="#s9:l1">leeden</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Geloovig knielen <rhyme label="b" type="m" corresp="#s9:l2">ne'er</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Eer-biedig voor zijn <rhyme label="c" type="m">Majesteit</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Hy heeft ons gunst en <rhyme label="d" type="f">vreede</rhyme></l>
        <l id="s9:l7" met="3" type="-+">In Christo <rhyme label="c" type="m" corresp="#s9:l5">toe-gezeid</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Ag in dit droevig <rhyme label="a" type="f">leeven</rhyme>!</l>
        <l id="s10:l2" met="3" type="-+">Gants geen volmaaktheid <rhyme label="b" type="m">is</rhyme>.</l>
        <l id="s10:l3" met="3" type="-+">Geen Mensch hoe hoog <rhyme label="a" type="f" corresp="#s10:l1">verheeven</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Is vry van <rhyme label="b" type="m" corresp="#s10:l2">kommernis</rhyme>.</l>
        <l id="s10:l5" met="4" type="-+">In 't kort, elk een heeft zijn <rhyme label="c" type="m">verdriet</rhyme>.</l>
        <l id="s10:l6" met="3" type="-+">God elk zijn deel wil <rhyme label="d" type="f">geeven</rhyme></l>
        <l id="s10:l7" met="3" type="-+">Niemand zijn kruis <rhyme label="c" type="m" corresp="#s10:l5">ont-vlied</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Bedenk dat vry geen <rhyme label="a" type="f">zaaken</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Geschieden by <rhyme label="b" type="m">geval</rhyme>.</l>
        <l id="s11:l3" met="3" type="-+">Men kan 't niet anders <rhyme label="a" type="f" corresp="#s11:l1">maaken</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Want God regeerd het <rhyme label="b" type="m" corresp="#s11:l2">al</rhyme>:</l>
        <l id="s11:l5" met="4" type="-+">Zoo neem uw kruis ook aan voor <rhyme label="c" type="m">goed</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">En denk dit 's van den <rhyme label="d" type="f">Heere</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">Die 't tot mijn besten <rhyme label="c" type="m" corresp="#s11:l5">doet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>33528</id>
    <date>
      <year-start>1614</year-start>
      <year-end>1614</year-end>
    </date>
    <tags>
      <tag standard-name="kerstlied" translation="Christmas song">kerstlied</tag>
      <tag standard-name="gebedslied" translation="prayer">gebedslied</tag>
    </tags>
    <melody>Onze vader in hemelrijk</melody>
    <categories>
      <category translation="seasons and annual events">jaarkring</category>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Rumoldus Batavus</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Als nu Ihesus ghebooren <rhyme label="a" type="m">waer</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Van Maria die suuer Maget <rhyme label="a" type="m" corresp="#s1:l1">claer</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Al sonder wee, en sonder <rhyme label="b" type="m">pijn</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">En sy bleef doen noch Maghet <rhyme label="b" type="m" corresp="#s1:l3">fyn</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Soo wonde sy hem in doecken <rhyme label="c" type="m">teer</rhyme></l>
        <l id="s1:l6" met="4" type="-+">En leyde hem in die cribbe <rhyme label="c" type="m" corresp="#s1:l5">neer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Daer lach die alder grootste <rhyme label="a" type="m">Heer</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Die de aerde schip, ende oock het <rhyme label="a" type="m" corresp="#s2:l1">meer</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Iae oock den hemel en <rhyme label="b" type="m">t’firmament</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Dese worde daer geleyt die beesten <rhyme label="b" type="m" corresp="#s2:l3">onzent</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Want dese stonden daer in dien <rhyme label="c" type="m">stal</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Doen Ihesus quam in dit aertscje <rhyme label="c" type="m" corresp="#s2:l5">dal</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Die Engelen bedreuen blijtschap <rhyme label="a" type="m">hoort</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Sy songhen eendrachtich met <rhyme label="a" type="m" corresp="#s3:l1">accoort</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Daer lagen slaep-herders en hielden haer <rhyme label="b" type="m">wacht</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Dese hebben sy die boodtschap <rhyme label="b" type="m" corresp="#s3:l3">ghebracht</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Sy wesen die plaetse sy maeckten <rhyme label="c" type="m">gewach</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Dat hy tot Bethlehem in doecken <rhyme label="c" type="m" corresp="#s3:l5">lach</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Die Engelen loofden God, en wenschen ons <rhyme label="a" type="m">vreen</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Die herderkens gheloofdent en gingen daer <rhyme label="a" type="m" corresp="#s4:l1">heenr</rhyme>}</l>
        <l id="s4:l3" met="4" type="-+">Sy vonden dat kindeken in een crebbe <rhyme label="b" type="m">geleyt</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Alsoot die Herderkens waeren <rhyme label="b" type="m" corresp="#s4:l3">gheseyt</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Als sy hem haddne ghebeden <rhyme label="c" type="m">aen</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Syn zy weder by haer beesten <rhyme label="c" type="m" corresp="#s4:l5">ghegaen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">O Schepper hoe thoont ghy sulcken <rhyme label="a" type="m">ootmoet</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Dat ghy scaepherders v boodtschap <rhyme label="a" type="m" corresp="#s5:l1">doet</rhyme></l>
        <l id="s5:l3" met="4" type="-+">En hooghe menschen ghy weinich <rhyme label="b" type="m">acht</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Die hebt ghy dese boodtschap niet <rhyme label="b" type="m" corresp="#s5:l3">ghebracht</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Maer een volck onnosel ende <rhyme label="c" type="m">slecht</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Dese hebt ghy van u coemste <rhyme label="c" type="m" corresp="#s5:l5">onderrecht</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Wy soecken ter werelt alle <rhyme label="a" type="m">wellust</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Maer O Heer hoe syt ghy op <rhyme label="a" type="m" corresp="#s6:l1">gherust</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Het Huisken is open ende <rhyme label="b" type="m">bloot</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Ghy sit daer zoo arm op v moeders <rhyme label="b" type="m" corresp="#s6:l3">schoot</rhyme></l>
        <l id="s6:l5" met="4" type="-+">V wiege die is een steenen <rhyme label="c" type="m">creb</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Daer die beesten haeren spijse wt <rhyme label="c" type="m" corresp="#s6:l5">heb</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Dus waer die coemste op dat <rhyme label="a" type="m">pas</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Van hem die Heer offer hemel en eerde <rhyme label="a" type="m" corresp="#s7:l1">was</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Ghy ligt hier gewonden in doecken <rhyme label="b" type="m">snoot</rhyme></l>
        <l id="s7:l4" met="4" type="-+">En zijt nochtans Godts zone <rhyme label="b" type="m" corresp="#s7:l3">groot</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Die daer den hemel en de aerde <rhyme label="c" type="m">schiep</rhyme></l>
        <l id="s7:l6" met="4" type="-+">Ende als nu hier voor die beesten <rhyme label="c" type="m" corresp="#s7:l5">sliep</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Dit exempel hebt ghy ons voor <rhyme label="a" type="m">ghestelt</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Dat wy v souden soecken, en niet het <rhyme label="a" type="m" corresp="#s8:l1">gelt</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Hy is wel salich die u O Heere hier <rhyme label="b" type="m">verkiest</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Al ist dat hy yet om y hier <rhyme label="b" type="m" corresp="#s8:l3">verliest</rhyme></l>
        <l id="s8:l5" met="4" type="-+">Soo die herderkens doen hebben <rhyme label="c" type="m">gedaen</rhyme></l>
        <l id="s8:l6" met="4" type="-+">Laet ons met haer nae Bedthlem <rhyme label="c" type="m" corresp="#s8:l5">gaen</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Verblyt u Bedthlem goede <rhyme label="a" type="m">stad</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">In v is ghebooren des werelts <rhyme label="a" type="m" corresp="#s9:l1">schadt</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Niet alleen, Dauidt den <rhyme label="b" type="m">Propheet</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Maer oock zyn zoon daer ghy luttel af <rhyme label="b" type="m" corresp="#s9:l3">weet</rhyme></l>
        <l id="s9:l5" met="4" type="-+">Dat was nochtans v voor <rhyme label="c" type="m">gheseyt</rhyme></l>
        <l id="s9:l6" met="4" type="-+">Al ist dat ghy v tot slaepen <rhyme label="c" type="m" corresp="#s9:l5">leyt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Onse Heer is geworden eenen <rhyme label="a" type="m">kint</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Gaet tot Bethlem daer ghy hem <rhyme label="a" type="m" corresp="#s10:l1">vint</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Bedthlem dat is een huys van <rhyme label="b" type="m">broot</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Daer cont ghy versaden v honger <rhyme label="b" type="m" corresp="#s10:l3">groot</rhyme></l>
        <l id="s10:l5" met="4" type="-+">In die heylighe kercker opten <rhyme label="c" type="m">autaer</rhyme></l>
        <l id="s10:l6" met="4" type="-+">Onder specye van broot vint ghy hem <rhyme label="c" type="m" corresp="#s10:l5">claer</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Oock neemt ghy Iesum <rhyme label="a" type="m">byderhant</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Als ghy een arme Christen <rhyme label="a" type="m" corresp="#s11:l1">ontfangt</rhyme></l>
        <l id="s11:l3" met="4" type="-+">En gheeft hem spijse, ende <rhyme label="b" type="m">cleer</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Want al dit doet ghy Godt den <rhyme label="b" type="m" corresp="#s11:l3">Heer</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Syt dan in zyn armoede niet <rhyme label="c" type="m">bedroeft</rhyme></l>
        <l id="s11:l6" met="4" type="-+">Want gy muecht hem noch geuen dat hy <rhyme label="c" type="m" corresp="#s11:l5">behoeft</rhyme></l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Laet ons met hert, ende met <rhyme label="a" type="m">ghemoet</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Dit soete kindeken vallen te <rhyme label="a" type="m" corresp="#s12:l1">voet</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">D’welck daer in dit cribbeken <rhyme label="b" type="m">leyt</rhyme></l>
        <l id="s12:l4" met="4" type="-+">En ouer ons sonden zo deerlycken <rhyme label="b" type="m" corresp="#s12:l3">schreyt</rhyme></l>
        <l id="s12:l5" met="4" type="-+">Dat zyn eerste coemste inden <rhyme label="c" type="m">vleys</rhyme>,</l>
        <l id="s12:l6" met="4" type="-+">Ons toch mach wesen tot een eeuwich <rhyme label="c" type="m" corresp="#s12:l5">peys</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Nu coemt hy eerst als een onnosel <rhyme label="a" type="m">lam</rhyme></l>
        <l id="s13:l2" met="4" type="-+">Maer zyn tweede coemste zal wesen <rhyme label="a" type="m" corresp="#s13:l1">gram</rhyme></l>
        <l id="s13:l3" met="4" type="-+">Gunt my O Iesu doch dese <rhyme label="b" type="m">weldaet</rhyme></l>
        <l id="s13:l4" met="4" type="-+">Dat v gramschap my dan niet en <rhyme label="b" type="m" corresp="#s13:l3">schaet</rhyme></l>
        <l id="s13:l5" met="4" type="-+">Maer thoont my dan v aensicht <rhyme label="c" type="m">blydelyck</rhyme></l>
        <l id="s13:l6" met="4" type="-+">En dat woort, coemt besit myn eeuwich <rhyme label="c" type="m" corresp="#s13:l5">rijck</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

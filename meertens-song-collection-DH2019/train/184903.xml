      <year-start>1664</year-start>
      <year-end>1664</year-end>
    </date>
    <tags/>
    <melody/>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">ALs een Herder hoedt sijn <rhyme label="a" type="f">Schapen</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Soo neemt Godt oock op my <rhyme label="b" type="m">acht</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">'k Vrees geen kruys gewelt noch <rhyme label="a" type="f" corresp="#s1:l1">wapen</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Hy houdt om my heen de <rhyme label="b" type="m" corresp="#s1:l2">wacht</rhyme></l>
        <l id="s1:l5" met="4" type="+-">Hy de Heere eeuwigh <rhyme label="c" type="m">goedt</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Matigh my behoedt en <rhyme label="c" type="m" corresp="#s1:l5">voedt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">O sijn gunst niet om door <rhyme label="a" type="f">gronden</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Heeft mijn Ziele troost <rhyme label="b" type="m">bereydt</rhyme></l>
        <l id="s2:l3" met="4" type="+-">'k Heb het soete soet <rhyme label="a" type="f" corresp="#s2:l1">bevonde</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Door zijn milde <rhyme label="b" type="m" corresp="#s2:l2">goedigheydt</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Hy op wien mijn hoope <rhyme label="c" type="m">staet</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Mijn omhelst met sijn <rhyme label="c" type="m" corresp="#s2:l5">genaedt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Doe ick gingh verkeerde <rhyme label="a" type="f">wegen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Afgedwaelt van 'slevens <rhyme label="b" type="m">paen</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Toont hy sich tot my <rhyme label="a" type="f" corresp="#s3:l1">genegen</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Bracht my weer ter rechter <rhyme label="b" type="m" corresp="#s3:l2">baen</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Stierde mijne voet ter <rhyme label="c" type="m">deught</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Daer mijn Ziel was in <rhyme label="c" type="m" corresp="#s3:l5">verheught</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Of ick schoon moet eensaem <rhyme label="a" type="f">wesen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Daer de doodt voor d'oogen <rhyme label="b" type="m">staet</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Godt maeckt 't herte vry van <rhyme label="a" type="f" corresp="#s4:l1">vreesen</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Sterckt en hoet my voor het <rhyme label="b" type="m" corresp="#s4:l2">quaedt</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">'k Vind sijn toe sicht over <rhyme label="c" type="m">al</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Dies ick vrees geen <rhyme label="c" type="m" corresp="#s4:l5">ongeval</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Magh ick niet met recht wel <rhyme label="a" type="f">boogen</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Op mijns Godes <rhyme label="b" type="m">gunstigheydt</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Hy heeft voor mijns vyandts <rhyme label="a" type="f" corresp="#s5:l1">oogen</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">My een reynde disch <rhyme label="b" type="m" corresp="#s5:l2">bereydt</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Rijck van oly-spijs seer <rhyme label="c" type="m">fijn</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Daer voor sal ick danckbaer <rhyme label="c" type="m" corresp="#s5:l5">zijn</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">'t Sy hoe langh oock dat ick <rhyme label="a" type="f">leve</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Dies mijn Ziele schept een <rhyme label="b" type="m">moet</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Sal mijn Godt my rijckelijck <rhyme label="a" type="f" corresp="#s6:l1">geven</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Het geniet van alle <rhyme label="b" type="m" corresp="#s6:l2">goedt</rhyme>:</l>
        <l id="s6:l5" met="4" type="+-">Eeuwelijck soo ick vast <rhyme label="c" type="m">vertrouw</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Plaets ick in sijn wooningh <rhyme label="c" type="m" corresp="#s6:l5">hou</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

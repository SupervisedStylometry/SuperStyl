  <author>M. van de Speybroek</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">VRienden Christi <rhyme label="a" type="m">eerbaer</rhyme>,</l>
        <l id="s1:l2" met="2" type="-+">Gods <rhyme label="b" type="f">uytverkoren</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Ick meen u <rhyme label="a" type="m" corresp="#s1:l1">allegaer</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+"><rhyme label="b" type="f" corresp="#s1:l2">Weder-geboren</rhyme>;</l>
        <l id="s1:l5" met="4" type="-+">Maer niet uyt verganck'lijcken <rhyme label="c" type="f">zade</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Maer door sijn heyligh <rhyme label="d" type="m">woordt</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Om vrucht te brengen <rhyme label="d" type="m" corresp="#s1:l6">voort</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Met liefde en <rhyme label="d" type="m" corresp="#s1:l6">accoort</rhyme>,</l>
        <l id="s1:l9" met="2" type="-+">Vroegh en <rhyme label="c" type="f" corresp="#s1:l5">spade</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Door 't woort dat u <rhyme label="a" type="m">gebracht</rhyme></l>
        <l id="s2:l2" met="2" type="-+">Is door de <rhyme label="b" type="f">leere</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">'t Euangely een <rhyme label="a" type="m" corresp="#s2:l1">kracht</rhyme></l>
        <l id="s2:l4" met="2" type="-+">Al van den <rhyme label="b" type="f" corresp="#s2:l2">Heere</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Om een blijde bootschap te <rhyme label="c" type="f">brengen</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Van den Behouder <rhyme label="d" type="m">groot</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">'t Levende <rhyme label="d" type="m" corresp="#s2:l6">Hemels-broodt</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Die ons door Sijn bloedt <rhyme label="d" type="m" corresp="#s2:l6">roodt</rhyme>,</l>
        <l id="s2:l9" met="2" type="-+">Gaf dese <rhyme label="c" type="f" corresp="#s2:l5">dingen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Door 't reyne <rhyme label="a" type="m">Water-badt</rhyme>,</l>
        <l id="s3:l2" met="2" type="-+">Al uyt <rhyme label="b" type="f">genaden</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Gereynight zijn van <rhyme label="a" type="m" corresp="#s3:l1">dat</rhyme></l>
        <l id="s3:l4" met="2" type="-+">Haer mochte <rhyme label="b" type="f" corresp="#s3:l2">schaden</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Om van dat eygen volc te <rhyme label="c" type="f">wesen</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Vyerigh in 's Heeren <rhyme label="d" type="m">werck</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Want dat is 't rechte <rhyme label="d" type="m" corresp="#s3:l6">merck</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Van Christi ware <rhyme label="d" type="m" corresp="#s3:l6">Kerck</rhyme>,</l>
        <l id="s3:l9" met="2" type="-+">Liefde <rhyme label="c" type="f" corresp="#s3:l5">gepresen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Of men hier al <rhyme label="a" type="m">gelooft</rhyme></l>
        <l id="s4:l2" met="2" type="-+">Aen God <rhyme label="b" type="f">Almachtigh</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">En Christum, 't ware <rhyme label="a" type="m" corresp="#s4:l1">Hooft</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">Heylig en <rhyme label="b" type="f" corresp="#s4:l2">krachtigh</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">So de liefde niet en gaet <rhyme label="c" type="f">blijcken</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">'t En is maer <rhyme label="d" type="m">ydelheyt</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Soo den Apostel <rhyme label="d" type="m" corresp="#s4:l6">seyt</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Want de liefde <rhyme label="d" type="m" corresp="#s4:l6">planteyt</rhyme></l>
        <l id="s4:l9" met="2" type="-+">Moet al <rhyme label="c" type="f" corresp="#s4:l5">verrijcken</rhyme>,</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Is hier de liefde <rhyme label="a" type="m">niet</rhyme>?</l>
        <l id="s5:l2" met="2" type="-+">'t En zijn maer <rhyme label="b" type="f">droomen</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Gelijck men dat wel <rhyme label="a" type="m" corresp="#s5:l1">siet</rhyme></l>
        <l id="s5:l4" met="2" type="-+">Al aen de <rhyme label="b" type="f" corresp="#s5:l2">Boomen</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Of sy al staen verciert met <rhyme label="c" type="f">blaren</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Soo is het woordt doch <rhyme label="d" type="m">waer</rhyme>:</l>
        <l id="s5:l7" met="3" type="-+">Wilt hem af-houwen <rhyme label="d" type="m" corresp="#s5:l6">daer</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Of men hem al een <rhyme label="d" type="m" corresp="#s5:l6">Jaer</rhyme></l>
        <l id="s5:l9" met="2" type="-+">Noch mochte <rhyme label="c" type="f" corresp="#s5:l5">sparen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Een Capitael <rhyme label="a" type="m">hooft-somm'</rhyme>,</l>
        <l id="s6:l2" met="2" type="-+">Niet om <rhyme label="b" type="f">waerdeeren</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Al wilde een <rhyme label="a" type="m" corresp="#s6:l1">daeromm'</rhyme></l>
        <l id="s6:l4" met="2" type="-+">Sijn goet <rhyme label="b" type="f" corresp="#s6:l2">uyt-keeren</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Sy moet al anders zijn <rhyme label="c" type="f">verkregen</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">En wie datse hier <rhyme label="d" type="m">heeft</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Ja daer in vruchtbaer <rhyme label="d" type="m" corresp="#s6:l6">leeft</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">De Heere haer noch <rhyme label="d" type="m" corresp="#s6:l6">geeft</rhyme></l>
        <l id="s6:l9" met="2" type="-+">Oock sijne <rhyme label="c" type="f" corresp="#s6:l5">zegen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Een recht volkomen <rhyme label="a" type="m">bandt</rhyme>,</l>
        <l id="s7:l2" met="2" type="-+">Schoon <rhyme label="b" type="f">uytgelesen</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Geen stercker in het <rhyme label="a" type="m" corresp="#s7:l1">Landt</rhyme>,</l>
        <l id="s7:l4" met="2" type="-+">Hoe seer <rhyme label="b" type="f" corresp="#s7:l2">gepresen</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Eenen gordel om vast te <rhyme label="c" type="f">binden</rhyme>:</l>
        <l id="s7:l6" met="3" type="-+">Maer wie haer hier werdt <rhyme label="d" type="m">quijt</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">En leeft in haet en <rhyme label="d" type="m" corresp="#s7:l6">nijt</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Salse naer deser <rhyme label="d" type="m" corresp="#s7:l6">tijdt</rhyme></l>
        <l id="s7:l9" met="2" type="-+">Nimmermeer <rhyme label="c" type="f" corresp="#s7:l5">vinden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Oorlof elck Christen <rhyme label="a" type="m">let</rhyme></l>
        <l id="s8:l2" met="2" type="-+">Geestigh <rhyme label="b" type="f">besneden</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Verciert u reyn en <rhyme label="a" type="m" corresp="#s8:l1">net</rhyme></l>
        <l id="s8:l4" met="2" type="-+">Met liefde <rhyme label="b" type="f" corresp="#s8:l2">heden</rhyme>:</l>
        <l id="s8:l5" met="4" type="-+">Druct haer als eenen zegel <rhyme label="c" type="f">schoone</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Vast op u <rhyme label="d" type="m">testament</rhyme></l>
        <l id="s8:l7" met="3" type="-+">In het herte <rhyme label="d" type="m" corresp="#s8:l6">geprent</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Voor den Heere <rhyme label="d" type="m" corresp="#s8:l6">bekent</rhyme>,</l>
        <l id="s8:l9" met="2" type="-+">In 's Hemels <rhyme label="c" type="f" corresp="#s8:l5">Throone</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">WEereld, die de naem van <rhyme label="a" type="f">Werrelt</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Om u werren seer wel <rhyme label="b" type="m">voegt</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Daermen soo in dwaelt en <rhyme label="a" type="f" corresp="#s1:l1">dwerrelt</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Datmer staeg van sweet en <rhyme label="b" type="m" corresp="#s1:l2">swoegt</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">Gy meugt werden <rhyme label="c" type="f">vergeleeken</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Wel by Babel, want soo <rhyme label="d" type="m">seer</rhyme></l>
        <l id="s1:l7" met="4" type="+-">Is in u verwert het <rhyme label="c" type="f" corresp="#s1:l5">spreken</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Als te Babel <rhyme label="d" type="m" corresp="#s1:l6">immermeer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Om dat soo veel <rhyme label="a" type="f">werre-geesten</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Van d'eenvoud'ge waerheit <rhyme label="b" type="m">wers</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Om haer werre-kunst te <rhyme label="a" type="f" corresp="#s2:l1">leesten</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Alles stellen over <rhyme label="b" type="m" corresp="#s2:l2">dwers</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Die door al haer moeylik <rhyme label="c" type="f">werren</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Toonen dats' in waerheit <rhyme label="d" type="m">zijn</rhyme></l>
        <l id="s2:l7" met="4" type="+-">Dwaelend' ongestaed'ge <rhyme label="c" type="f" corresp="#s2:l5">sterren</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Met bedriegelikken <rhyme label="d" type="m" corresp="#s2:l6">schijn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">'k Sal uyt al u <rhyme label="a" type="f">werre-strikken</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Soeken staeg te zijn <rhyme label="b" type="m">ontwert</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">En na 's Hemels hoogte <rhyme label="a" type="f" corresp="#s3:l1">mikken</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Daer men nooit verwerr't en <rhyme label="b" type="m" corresp="#s3:l2">werd</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Wijl ik sitt' aen Babels <rhyme label="c" type="f">beken</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Sal ik weenen tot den <rhyme label="d" type="m">Heer</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">En van 't Hemelsch Sion <rhyme label="c" type="f" corresp="#s3:l5">spreken</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Tot dat ik aldaer <rhyme label="d" type="m" corresp="#s3:l6">verkeer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

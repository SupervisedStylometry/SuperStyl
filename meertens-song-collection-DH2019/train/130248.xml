  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">'t Kille hert van <rhyme label="a" type="m">Amarant</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Heb ik eindelijk <rhyme label="b" type="f">bewogen</rhyme></l>
        <l id="s1:l3" met="4" type="+-">En gebragt tot <rhyme label="b" type="f" corresp="#s1:l2">mededoogen</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Naer soo grooten <rhyme label="a" type="m" corresp="#s1:l1">tegenstant</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">Maer wat dat ik heb <rhyme label="c" type="f">geleden</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Is myn Amarant <rhyme label="d" type="m">bewust</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Eer ik haer door myn <rhyme label="c" type="f" corresp="#s1:l5">gebeden</rhyme></l>
        <l id="s1:l8" met="4" type="+-">Heb in minne-slaep <rhyme label="d" type="m" corresp="#s1:l6">gesust</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Nu is al mijn smert <rhyme label="a" type="m">gedaen</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Wij dat haer bevallig' <rhyme label="b" type="f">oogjes</rhyme></l>
        <l id="s2:l3" met="4" type="+-">- Regte pijl' en <rhyme label="b" type="f" corresp="#s2:l2">minne-boogjes</rhyme> -</l>
        <l id="s2:l4" met="4" type="+-">My soo vriend'lijk lonken <rhyme label="a" type="m" corresp="#s2:l1">aan</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">'k Zet nu al het angstig <rhyme label="c" type="f">vresen</rhyme></l>
        <l id="s2:l6" met="4" type="+-">En misnoegen aen een <rhyme label="d" type="m">kant</rhyme></l>
        <l id="s2:l7" met="4" type="+-">Wyl ik zie bemint te <rhyme label="c" type="f" corresp="#s2:l5">wesen</rhyme></l>
        <l id="s2:l8" met="4" type="+-">Van mijn schoone <rhyme label="d" type="m" corresp="#s2:l6">Amarant</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Onse wederzijdse <rhyme label="a" type="m">gloet</rhyme></l>
        <l id="s3:l2" met="4" type="+-">En de kuisse <rhyme label="b" type="f">minne-kusjes</rhyme></l>
        <l id="s3:l3" met="4" type="+-">'t Zaem gemengt met soo veel <rhyme label="b" type="f" corresp="#s3:l2">lusjes</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Dat ons zieltjes vreugt aen <rhyme label="a" type="m" corresp="#s3:l1">doet</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Hout ons vaek soo op <rhyme label="c" type="f">getogen</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Met de lipjes tegens <rhyme label="d" type="m">een</rhyme></l>
        <l id="s3:l7" met="4" type="+-">Dat wy wenschen soo te <rhyme label="c" type="f" corresp="#s3:l5">mogen</rhyme></l>
        <l id="s3:l8" met="4" type="+-">Varen na den Hemel <rhyme label="d" type="m" corresp="#s3:l6">heen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Amarant is al mijn <rhyme label="a" type="m">lust</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Die my soo veel vreugt kan <rhyme label="b" type="f">geven</rhyme></l>
        <l id="s4:l3" met="4" type="+-">En vernoeging in mijn <rhyme label="b" type="f" corresp="#s4:l2">leven</rhyme>.</l>
        <l id="s4:l4" met="4" type="+-">Amarant stelt mijn <rhyme label="a" type="m" corresp="#s4:l1">gerust</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Amarant schept ook <rhyme label="c" type="f">behagen</rhyme></l>
        <l id="s4:l6" met="4" type="+-">In haer trouwe <rhyme label="d" type="m">Lyzimon</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Dat zy weer-min toe wil <rhyme label="c" type="f" corresp="#s4:l5">dragen</rhyme></l>
        <l id="s4:l8" met="4" type="+-">Wijl 's hem altyt Trouw <rhyme label="d" type="m" corresp="#s4:l6">bevond</rhyme>.</l>
      </lg>
    </lg>
  </text>

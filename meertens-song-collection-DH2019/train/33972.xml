    <melody>Als Jezus in zijn majesteit</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Jacob Rosant</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">GOdt sal in sijne <rhyme label="a" type="m">Majesteyt</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Neer-koomen met <rhyme label="a" type="m" corresp="#s1:l1">rechtvaerdicheyt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Beneden in de <rhyme label="b" type="f">Wolken</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Om te oordeelen de <rhyme label="b" type="f" corresp="#s1:l3">Volken</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">De Schapen aen de <rhyme label="a" type="m">reghter-handt</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">De Bocken aen de <rhyme label="a" type="m" corresp="#s2:l1">slinker-kandt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Die sullen staen en <rhyme label="b" type="f">beeven</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Als Godt sal 't oordeel <rhyme label="b" type="f" corresp="#s2:l3">geeven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Komt hier die sijt <rhyme label="a" type="m">gebeenedijt</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Besit mijns Vaders Rijk <rhyme label="a" type="m" corresp="#s3:l1">altijt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Dat hy heeft reedt doen <rhyme label="b" type="f">maken</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Dat gy daer in soudt <rhyme label="b" type="f" corresp="#s3:l3">raken</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Want toen ik was in <rhyme label="a" type="m">hongers-noodt</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Toen hebt gy mijn gespijst met <rhyme label="a" type="m" corresp="#s4:l1">broodt</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">En drinken ook <rhyme label="b" type="f">geschonken</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Daer ik van heb <rhyme label="b" type="f" corresp="#s4:l3">gedronken</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Gy hebt bedekt mijn naekte <rhyme label="a" type="m">lijf</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Wanneer ik was van koude <rhyme label="a" type="m" corresp="#s5:l1">stijf</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">'k Ben Pellegrim <rhyme label="b" type="f">gekoomen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">g' Hebt mijn in huys <rhyme label="b" type="f" corresp="#s5:l3">genoomen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">En gy hebt mijn <rhyme label="a" type="m">gevisiteert</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Wanneer ik siek lagh en <rhyme label="a" type="m" corresp="#s6:l1">beseert</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Toen ik lagh in de <rhyme label="b" type="f">banden</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Toen quamt gy mijn ook <rhyme label="b" type="f" corresp="#s6:l3">vanden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Wanneer soo is het togh <rhyme label="a" type="m">geschiet</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Dat wy u sagen in 't <rhyme label="a" type="m" corresp="#s7:l1">verdriet</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">'t Heught ons van geene <rhyme label="b" type="f">dagen</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Dat wy u aldus <rhyme label="b" type="f" corresp="#s7:l3">sagen</rhyme>?</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Gy wist wel niet dat ik het <rhyme label="a" type="m">waer</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Maer nu soo segge ik u <rhyme label="a" type="m" corresp="#s8:l1">klaer</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Dat gy dees minste <rhyme label="b" type="f">deede</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Geschiede mijn al <rhyme label="b" type="f" corresp="#s8:l3">meede</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Maer gy vermaledijde <rhyme label="a" type="m">Saet</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Die altijt hebt geslooft in 't <rhyme label="a" type="m" corresp="#s9:l1">quaet</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Gaet heen in 't eeuwigh <rhyme label="b" type="f">viere</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Daer is grouwlijk <rhyme label="b" type="f" corresp="#s9:l3">getiere</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">'k Had honger, dorst, en siekte <rhyme label="a" type="m">groot</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">'k Was Pellegrim, van kleeren <rhyme label="a" type="m" corresp="#s10:l1">bloot</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">In heghtingh met <rhyme label="b" type="f">elende</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">g' Uw oogen van mijn <rhyme label="b" type="f" corresp="#s10:l3">wende</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Hier op soo seggen sy, o <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Verklaert gy ons togh eens <rhyme label="a" type="m" corresp="#s11:l1">wanneer</rhyme></l>
        <l id="s11:l3" met="3" type="-+">Wy hebben met ons <rhyme label="b" type="f">oogen</rhyme></l>
        <l id="s11:l4" met="3" type="-+">U desgelijks sien <rhyme label="b" type="f" corresp="#s11:l3">doogen</rhyme>?</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Onder den armen schuylden <rhyme label="a" type="m">ik</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Al dunkt u dat seer <rhyme label="a" type="m" corresp="#s12:l1">wonderlik</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">'t Geen gy die niet en <rhyme label="b" type="f">deede</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Onthielt gy my ook <rhyme label="b" type="f" corresp="#s12:l3">meede</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Dus gaet in uw' <rhyme label="a" type="m">verdoemenis</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Daer alle droefheyt eeuwigh <rhyme label="a" type="m" corresp="#s13:l1">is</rhyme>;</l>
        <l id="s13:l3" met="3" type="-+">De ander sal ik <rhyme label="b" type="f">geeven</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">De vreught van 't eeuwigh <rhyme label="b" type="f" corresp="#s13:l3">leeven</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Daerom, o lieve vrienden <rhyme label="a" type="m">al</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">Op dat wy blijven in 't <rhyme label="a" type="m" corresp="#s14:l1">getal</rhyme></l>
        <l id="s14:l3" met="3" type="-+">Van Goodes <rhyme label="b" type="f">uytverkooren</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">Laet ons dees lesse <rhyme label="b" type="f" corresp="#s14:l3">hooren</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">En weesen t'allen-ty <rhyme label="a" type="m">bereyt</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">Tot werken van <rhyme label="a" type="m" corresp="#s15:l1">barmharigheyt</rhyme>,</l>
        <l id="s15:l3" met="3" type="-+">Alleen niet tot die <rhyme label="b" type="f">leeven</rhyme>,</l>
        <l id="s15:l4" met="3" type="-+">Maer ook tot die daer <rhyme label="b" type="f" corresp="#s15:l3">sneeven</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">De doode menschen onder <rhyme label="a" type="m">d'aerdt</rhyme>,</l>
        <l id="s16:l2" met="4" type="-+">Eerlijk begraven met <rhyme label="a" type="m" corresp="#s16:l1">eerwaert</rhyme>;</l>
        <l id="s16:l3" met="3" type="-+">Hier voor wil Godt ons <rhyme label="b" type="f">geeven</rhyme>,</l>
        <l id="s16:l4" met="3" type="-+">Tot loon, het eeuwigh <rhyme label="b" type="f" corresp="#s16:l3">leeven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

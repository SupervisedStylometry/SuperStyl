    <tags/>
    <melody>Ik zucht zucht op zucht</melody>
  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">WIlt ghy in ’t leven <rhyme label="a" type="m">gaen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Zoo doet’t geen u van <rhyme label="b" type="f">Gode</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Na ’t schriftelijk <rhyme label="a" type="m" corresp="#s1:l1">vermaen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Belast is en <rhyme label="b" type="f" corresp="#s1:l2">geboden</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Want die alleen <rhyme label="c" type="f">geloven</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">En roupen willen, <rhyme label="d" type="m">Heer</rhyme>!</l>
        <l id="s1:l7" met="3" type="-+">Voorwaer en zul-len <rhyme label="c" type="f" corresp="#s1:l5">roven</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Den Hemel <rhyme label="d" type="m" corresp="#s1:l6">nimmermeer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Den Hemel lijd <rhyme label="a" type="m">geweld</rhyme>:</l>
        <l id="s2:l2" met="3" type="-+">Noch daer is totten <rhyme label="b" type="f">zegen</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Van ’t Rijke Gods <rhyme label="a" type="m" corresp="#s2:l1">gesteld</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Geen ander slag van <rhyme label="b" type="f" corresp="#s2:l2">wegen</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Dus laet u niet <rhyme label="c" type="f">bedriegen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Want die u deze <rhyme label="d" type="m">baen</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Onmog’lijk maken, <rhyme label="c" type="f" corresp="#s2:l5">liegen</rhyme></l>
        <l id="s2:l8" met="3" type="-+">En leren qualijk <rhyme label="d" type="m" corresp="#s2:l6">gaen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Hoe kan onmog’lijk <rhyme label="a" type="m">zijn</rhyme></l>
        <l id="s3:l2" met="3" type="-+">De Heer-weg, die wy <rhyme label="b" type="f">lezen</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Wel tegen Ian <rhyme label="a" type="m" corresp="#s3:l1">Calvijn</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Niet zwaer, maer zoet te <rhyme label="b" type="f" corresp="#s3:l2">wezen</rhyme>?</l>
        <l id="s3:l5" met="3" type="-+">En daer wy aende <rhyme label="c" type="f">sporen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Tot op den dag van <rhyme label="d" type="m">he’en</rhyme>//</l>
        <l id="s3:l7" met="3" type="-+">Noch zien, hoe <rhyme label="c" type="f" corresp="#s3:l5">d’uitverkoren</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Daer hebben door <rhyme label="d" type="m" corresp="#s3:l6">getre’en</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Zoo dat bevonden <rhyme label="a" type="m">werd</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Een groote Schaer van <rhyme label="b" type="f">vrinden</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Die God uit ganscher <rhyme label="a" type="m" corresp="#s4:l1">hart</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Beliefden en <rhyme label="b" type="f" corresp="#s4:l2">beminden</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">Iae zelfs door all’ de <rhyme label="c" type="f">paden</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Van zijn besproke <rhyme label="d" type="m">wet</rhyme>//</l>
        <l id="s4:l7" met="3" type="-+">Eenvoudelijkken <rhyme label="c" type="f" corresp="#s4:l5">traden</rhyme></l>
        <l id="s4:l8" met="3" type="-+">En liepen <rhyme label="d" type="m" corresp="#s4:l6">ombesmet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Wel tot een zeker <rhyme label="a" type="m">merk</rhyme>;</l>
        <l id="s5:l2" met="3" type="-+">Dat wy met Godes <rhyme label="b" type="f">zegen</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Sijn magtig alle <rhyme label="a" type="m" corresp="#s5:l1">werk</rhyme>:</l>
        <l id="s5:l4" met="3" type="-+">Sijn fluks door alle <rhyme label="b" type="f" corresp="#s5:l2">wegen</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">En hoe zou een <rhyme label="c" type="f">genade</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Zoo wijs van <rhyme label="d" type="m">Majesteyt</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Onmogelijkke <rhyme label="c" type="f" corresp="#s5:l5">paden</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Ons hebben <rhyme label="d" type="m" corresp="#s5:l6">voorgeleit</rhyme>?</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Dit de’e noch noit <rhyme label="a" type="m">Tyran</rhyme>.</l>
        <l id="s6:l2" met="3" type="-+">En wie zou durven <rhyme label="b" type="f">denken</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Met zulken schennis <rhyme label="a" type="m" corresp="#s6:l1">dan</rhyme></l>
        <l id="s6:l4" met="3" type="-+">De goedheid Goods te <rhyme label="b" type="f" corresp="#s6:l2">krenken</rhyme>?</l>
        <l id="s6:l5" met="3" type="-+">Zwijgt ketter! zwijgt, ghy <rhyme label="c" type="f">basterdt</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">En steldt u tege <rhyme label="d" type="m">God</rhyme>.</l>
        <l id="s6:l7" met="3" type="-+">Maer liever dat ghy <rhyme label="c" type="f" corresp="#s6:l5">lasterdt</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Dan dat Heer Iesus <rhyme label="d" type="m" corresp="#s6:l6">spot</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Gaet heen (sprak Godes <rhyme label="a" type="m">zoon</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Gevraegt ter goede <rhyme label="b" type="f">trouwen</rhyme>)</l>
        <l id="s7:l3" met="3" type="-+">En doedt nae Goods <rhyme label="a" type="m" corresp="#s7:l1">geboon</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Wildt ghy uw’ ziel <rhyme label="b" type="f" corresp="#s7:l2">behouwen</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">Dit is de weg nae ’t <rhyme label="c" type="f">leven</rhyme>.</l>
        <l id="s7:l6" met="3" type="-+">O Iesu rijk en <rhyme label="d" type="m">mild</rhyme>!</l>
        <l id="s7:l7" met="3" type="-+">Wild ons maer gracy <rhyme label="c" type="f" corresp="#s7:l5">geven</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">En keurd al wat ghy <rhyme label="d" type="m" corresp="#s7:l6">wild</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

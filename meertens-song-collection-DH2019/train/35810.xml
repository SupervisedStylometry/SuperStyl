  <author>Albertus Buitendyck</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">'t IS nu den blijdtsten <rhyme label="a" type="m">nacht</rhyme>;</l>
        <l id="s1:l2" met="3" type="-+">Uyt d'Engelen wy <rhyme label="b" type="f">hooren</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Dat Iesus langh <rhyme label="a" type="m" corresp="#s1:l1">verwacht</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Nu seker is <rhyme label="b" type="f" corresp="#s1:l2">gebooren</rhyme>:</l>
        <l id="s1:l5" met="3" type="-+">Sy singen sonder <rhyme label="c" type="f">stillen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Den hooghsten Godt lof <rhyme label="d" type="m">geeft</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Den Mensch van goeden <rhyme label="c" type="f" corresp="#s1:l5">wille</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Op d'aerde vrede <rhyme label="d" type="m" corresp="#s1:l6">heeft</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ey! Eng'len secht ons <rhyme label="a" type="m">doch</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Waer sullen wy 't Kindt <rhyme label="b" type="f">vinden</rhyme>?</l>
        <l id="s2:l3" met="3" type="-+">Seght ons sonder <rhyme label="a" type="m" corresp="#s2:l1">bedrogh</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Waer schuylt, onse <rhyme label="b" type="f" corresp="#s2:l2">beminden</rhyme>?</l>
        <l id="s2:l5" met="3" type="-+">In een stal wort <rhyme label="c" type="f">gevonden</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Uw' grooten Godt en <rhyme label="d" type="m">Heer</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">In doeck en arm <rhyme label="c" type="f" corresp="#s2:l5">gewonden</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Leyt in een Kribbe <rhyme label="d" type="m" corresp="#s2:l6">neer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Laet ons eendrachtigh <rhyme label="a" type="m">al</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Na Bethlehem toe <rhyme label="b" type="f">treden</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Siet hier de vuyle <rhyme label="a" type="m" corresp="#s3:l1">stal</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Siet 't snootste hol der <rhyme label="b" type="f" corresp="#s3:l2">Stede</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Alhier den Heer der <rhyme label="c" type="f">Heeren</rhyme></l>
        <l id="s3:l6" met="3" type="-+">In pijn, in smert, in <rhyme label="d" type="m">rouw</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Moet 't meest veracht <rhyme label="c" type="f" corresp="#s3:l5">logeeren</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">'t Kint weent, schreyt, 't beeft van <rhyme label="d" type="m" corresp="#s3:l6">kouw</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Heft op met my uw' <rhyme label="a" type="m">keel</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Laet ons 't Kindeken <rhyme label="b" type="f">loven</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Dat door Vaders <rhyme label="a" type="m" corresp="#s4:l1">beveel</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Voor ons laet 's Hemels <rhyme label="b" type="f" corresp="#s4:l2">hoven</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Hier door heeft ons <rhyme label="c" type="f">bewesen</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Sijn goetheyt en <rhyme label="d" type="m">ootmoet</rhyme>:</l>
        <l id="s4:l7" met="3" type="-+">Sal ons daer na <rhyme label="c" type="f" corresp="#s4:l5">genesen</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Door 't storten van sijn <rhyme label="d" type="m" corresp="#s4:l6">bloedt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Al leyt 't Kint soo <rhyme label="a" type="m">versmaet</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">'t Is nochtans Godes <rhyme label="b" type="f">Zoone</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Al leyt hy <rhyme label="a" type="m" corresp="#s5:l1">desolaet</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Wilt hem Godts eer <rhyme label="b" type="f" corresp="#s5:l2">betoonen</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Als Godt is hy <rhyme label="c" type="f">gekomen</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Uyt sijn schoon 's Hemels <rhyme label="d" type="m">pleyn</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Heeft Menscheyt aen <rhyme label="c" type="f" corresp="#s5:l5">genomen</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Uyt eenen Maget <rhyme label="d" type="m" corresp="#s5:l6">reyn</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Siet, hoe 't Kint ons <rhyme label="a" type="m">bemint</rhyme>:</l>
        <l id="s6:l2" met="3" type="-+">'t Woort leyt heel sonder <rhyme label="b" type="f">spreken</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">In wie men alles <rhyme label="a" type="m" corresp="#s6:l1">vint</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Is nu vol, vol <rhyme label="b" type="f" corresp="#s6:l2">gebreecken</rhyme>:</l>
        <l id="s6:l5" met="3" type="-+">Die 't al licht, door sijn <rhyme label="c" type="f">straelen</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Leyt in een duyst're <rhyme label="d" type="m">nacht</rhyme>:</l>
        <l id="s6:l7" met="3" type="-+">Van die wy alles <rhyme label="c" type="f" corresp="#s6:l5">haelen</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Siet, hoe hy leyt <rhyme label="d" type="m" corresp="#s6:l6">veracht</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Die 't al kleet en <rhyme label="a" type="m">verleent</rhyme>;</l>
        <l id="s7:l2" met="3" type="-+">Die alles doet <rhyme label="b" type="f">verblyden</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Die schreyt, die sucht, die <rhyme label="a" type="m" corresp="#s7:l1">weent</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">In dese koude <rhyme label="b" type="f" corresp="#s7:l2">tijden</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">Die is den <rhyme label="c" type="f">aldermeesten</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Ia, d'alderhooghsten <rhyme label="d" type="m">Godt</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Leyt tusschen domme <rhyme label="c" type="f" corresp="#s7:l5">Beesten</rhyme></l>
        <l id="s7:l8" met="3" type="-+">In 't snoodtste <rhyme label="d" type="m" corresp="#s7:l6">Beesten-kot</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Die Mensch, en beest met <rhyme label="a" type="m">dranck</rhyme></l>
        <l id="s8:l2" met="3" type="-+">En spijs, spijst, laeft door 't <rhyme label="b" type="f">voeden</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Leyt onder 't beesten <rhyme label="a" type="m" corresp="#s8:l1">stanck</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Lijdt de meeste <rhyme label="b" type="f" corresp="#s8:l2">armoeden</rhyme>:</l>
        <l id="s8:l5" met="3" type="-+">Die alles heeft <rhyme label="c" type="f">geschapen</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">En alles fray <rhyme label="d" type="m">verciert</rhyme>;</l>
        <l id="s8:l7" met="3" type="-+">Moet in een kribbe <rhyme label="c" type="f" corresp="#s8:l5">slapen</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Daer Os en Ezel <rhyme label="d" type="m" corresp="#s8:l6">tiert</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Al leyt nu Godes <rhyme label="a" type="m">Zoon</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Veracht, en heel <rhyme label="b" type="f">verschoven</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Den Hemel blijft sijn <rhyme label="a" type="m" corresp="#s9:l1">Throon</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Al d' Engelen hem <rhyme label="b" type="f" corresp="#s9:l2">loven</rhyme>:</l>
        <l id="s9:l5" met="3" type="-+">Al laet hy hem niet <rhyme label="c" type="f">dienen</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Al leyt hy sonder <rhyme label="d" type="m">pracht</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Gedient van <rhyme label="c" type="f" corresp="#s9:l5">Seraphinen</rhyme></l>
        <l id="s9:l8" met="3" type="-+">Wort, met al 't Hemels <rhyme label="d" type="m" corresp="#s9:l6">macht</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Mijn Heer, mijn Godt, mijn <rhyme label="a" type="m">Al</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">En Mensch, voor onse <rhyme label="b" type="f">Menschen</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Ghy leyt in eene <rhyme label="a" type="m" corresp="#s10:l1">stal</rhyme>:</l>
        <l id="s10:l4" met="3" type="-+">Hier door na al ons <rhyme label="b" type="f" corresp="#s10:l2">wenschen</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Wilt ons alle <rhyme label="c" type="f">verheven</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Door uwe <rhyme label="d" type="m">nedricheyt</rhyme></l>
        <l id="s10:l7" met="3" type="-+">En sonden al <rhyme label="c" type="f" corresp="#s10:l5">vergeven</rhyme>,</l>
        <l id="s10:l8" met="3" type="-+">Door u liefde <rhyme label="d" type="m" corresp="#s10:l6">bereyt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Ontsteeckt ons flauw <rhyme label="a" type="m">gemoet</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Met uwe liefde <rhyme label="b" type="f">stralen</rhyme>:</l>
        <l id="s11:l3" met="3" type="-+">Door uw' reyn vleesch en <rhyme label="a" type="m" corresp="#s11:l1">bloet</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Laet reynheyt in ons <rhyme label="b" type="f" corresp="#s11:l2">dalen</rhyme>.</l>
        <l id="s11:l5" met="3" type="-+">Wilt ons alle rijck <rhyme label="c" type="f">maecken</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Door uw' arme <rhyme label="d" type="m">staet</rhyme>:</l>
        <l id="s11:l7" met="3" type="-+">Door uw' verachte <rhyme label="c" type="f" corresp="#s11:l5">saecken</rhyme>,</l>
        <l id="s11:l8" met="3" type="-+">Op ons u ooghen <rhyme label="d" type="m" corresp="#s11:l6">slaet</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Iesu <rhyme label="a" type="m">Emmanuel</rhyme>!</l>
        <l id="s12:l2" met="3" type="-+">Met uw' swachtels en <rhyme label="b" type="f">banden</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Bindt Satan van der <rhyme label="a" type="m" corresp="#s12:l1">Hel</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Dat hy ons niet kan <rhyme label="b" type="f" corresp="#s12:l2">randen</rhyme>.</l>
        <l id="s12:l5" met="3" type="-+">Door uw' koutheyt <rhyme label="c" type="f">uyt-doven</rhyme></l>
        <l id="s12:l6" met="3" type="-+">Wilt oock den Helschen <rhyme label="d" type="m">brant</rhyme>,</l>
        <l id="s12:l7" met="3" type="-+">Door uw' stal, geeft ons <rhyme label="c" type="f" corresp="#s12:l5">boven</rhyme></l>
        <l id="s12:l8" met="3" type="-+">Een plaets, in 's Hemels <rhyme label="d" type="m" corresp="#s12:l6">Landt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

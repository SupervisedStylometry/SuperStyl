  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">VErdwaelde Mensch laet <rhyme label="a" type="m">af</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Soo d'aerdtsche dreck en <rhyme label="a" type="m" corresp="#s1:l1">draf</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Van rijckdom pracht en tijdlijck <rhyme label="b" type="m">goedt</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Met hert te soecken, als ghy <rhyme label="b" type="m" corresp="#s1:l3">doet</rhyme>;</l>
        <l id="s1:l5" met="4" type="-+">Bindt in soo dwaes verkeerde <rhyme label="c" type="m">lust</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Bemindy Ziel heyls <rhyme label="c" type="m" corresp="#s1:l5">rust</rhyme>:</l>
        <l id="s1:l7" met="2" type="-+">'t Is wanckel // <rhyme label="d" type="f">verganckel</rhyme>,</l>
        <l id="s1:l8" met="5" type="-+">'t Geen ghy na tracht dat noydt begeerte <rhyme label="c" type="m" corresp="#s1:l5">blust</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">ick weet een <rhyme label="a" type="m">juweel</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">O soeckt dat voor u <rhyme label="a" type="m" corresp="#s2:l1">deel</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Een peerl' een schat die <rhyme label="b" type="m">overal</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">En stadigh u by blijven <rhyme label="b" type="m" corresp="#s2:l3">sal</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">In waerd' veel edeler dan <rhyme label="c" type="m">goudt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Der Zielen <rhyme label="c" type="m" corresp="#s2:l5">onderhoudt</rhyme>:</l>
        <l id="s2:l7" met="2" type="-+">Met d'oogen // ghy <rhyme label="d" type="f">mogen</rhyme></l>
        <l id="s2:l8" met="5" type="-+">Prijswaerder kleynoodt noyt beschouwen <rhyme label="c" type="m" corresp="#s2:l5">soudt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Die schoone peerl' is <rhyme label="a" type="m">deught</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Gerecht tot 's Hemels <rhyme label="a" type="m" corresp="#s3:l1">vreughdt</rhyme>.</l>
        <l id="s3:l3" met="4" type="-+">Dewelcke soo ghy die na <rhyme label="b" type="m">tracht</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Met herten lust en al u <rhyme label="b" type="m" corresp="#s3:l3">macht</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Ghy sult haer cieraedt // glans en <rhyme label="c" type="m">eer</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Bemercken langhs hoe <rhyme label="c" type="m" corresp="#s3:l5">meer</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">Dus aenvat // voor <rhyme label="d" type="f">waen-schat</rhyme></l>
        <l id="s3:l8" met="5" type="-+">Dees peerl' u hooghst van nood' na Christi <rhyme label="c" type="m" corresp="#s3:l5">leer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Want die dit kleynoodt <rhyme label="a" type="m">endt</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Heyl daer aen vast recht <rhyme label="a" type="m" corresp="#s4:l1">kendt</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Dees Iligh met dien Koopman <rhyme label="b" type="m">al</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Wat hy besit gaern geven <rhyme label="b" type="m" corresp="#s4:l3">sal</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Ia 't leven liever oock ter <rhyme label="c" type="m">noodt</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Ontruymen door den <rhyme label="c" type="m" corresp="#s4:l5">doodt</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">Dat missen // dien <rhyme label="d" type="f">wissen</rhyme></l>
        <l id="s4:l8" met="5" type="-+">Schat, noydt te recht na haer waerdy <rhyme label="c" type="m" corresp="#s4:l5">begroot</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Met heyligh <rhyme label="a" type="m">overlegh</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Soeckt elck dan wel den <rhyme label="a" type="m" corresp="#s5:l1">wegh</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Te gaen, die alsins <rhyme label="b" type="m">onbevleckt</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Ten eeuwigh sal'gen leven <rhyme label="b" type="m" corresp="#s5:l3">streckt</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Op welckers eynd' met 't hooghste <rhyme label="c" type="m">goedt</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">U Godt treedt te <rhyme label="c" type="m" corresp="#s5:l5">gemoet</rhyme>,</l>
        <l id="s5:l7" met="2" type="-+">Die heden // u <rhyme label="d" type="f">treden</rhyme>,</l>
        <l id="s5:l8" met="5" type="-+">Wend' af van d'aerd' en die ter deughde <rhyme label="c" type="m" corresp="#s5:l5">spoet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">s'Vlees sinlijckheydt en <rhyme label="a" type="m">raedt</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Schoon datse <rhyme label="a" type="m" corresp="#s6:l1">wederstaet</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Dijn gangh en lust tot deughdens <rhyme label="b" type="m">spoor</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Versaeck en geefje geen <rhyme label="b" type="m" corresp="#s6:l3">gehoor</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Dees wegh des heyls, en smalle <rhyme label="c" type="m">baen</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Leert allen hinder <rhyme label="c" type="m" corresp="#s6:l5">smaen</rhyme>,</l>
        <l id="s6:l7" met="2" type="-+">'t Valt waerlijck // <rhyme label="d" type="f">beswaerlijck</rhyme>,</l>
        <l id="s6:l8" met="5" type="-+">Gehecht aen d'aerd' ten Hemel in te <rhyme label="c" type="m" corresp="#s6:l5">gaen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Doch flaeuwt dies geensins, <rhyme label="a" type="m">want</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Hy leydt als by der <rhyme label="a" type="m" corresp="#s7:l1">handt</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">(Die u den wegh ten leven <rhyme label="b" type="m">leert</rhyme>;)</l>
        <l id="s7:l4" met="4" type="-+">Elck die ter saliger padt hem <rhyme label="b" type="m" corresp="#s7:l3">keert</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Loopt snel ter loop-baen jong of <rhyme label="c" type="m">grijs</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Na d'opgehangen <rhyme label="c" type="m" corresp="#s7:l5">prijs</rhyme>,</l>
        <l id="s7:l7" met="2" type="-+">Den tragen // na <rhyme label="d" type="f">jagen</rhyme>,</l>
        <l id="s7:l8" met="5" type="-+">Krijght daer af deel nimmer t'minst <rhyme label="c" type="m" corresp="#s7:l5">bewijs</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Al schijnt u d'arbeydt <rhyme label="a" type="m">groot</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Te winnen dit <rhyme label="a" type="m" corresp="#s8:l1">kleynoodt</rhyme>;</l>
        <l id="s8:l3" met="4" type="-+">Soo sy te grooter u <rhyme label="b" type="m">graeght</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Ten aensien dies dat ghy <rhyme label="b" type="m" corresp="#s8:l3">bejaeght</rhyme>:</l>
        <l id="s8:l5" met="4" type="-+">Licht valt den arbeydt, 't vroom <rhyme label="c" type="m">gemoedt</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Die 't Godt ter liefde <rhyme label="c" type="m" corresp="#s8:l5">doet</rhyme>,</l>
        <l id="s8:l7" met="2" type="-+">Hoogh-achtend // en <rhyme label="d" type="f">wachtend</rhyme>,</l>
        <l id="s8:l8" met="5" type="-+">Gedurigh op dat onwaerdeerlijck <rhyme label="c" type="m" corresp="#s8:l5">goet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

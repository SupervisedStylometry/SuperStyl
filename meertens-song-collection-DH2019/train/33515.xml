<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>33515</id>
    <date>
      <year-start>1614</year-start>
      <year-end>1614</year-end>
    </date>
    <tags>
      <tag standard-name="heiligenlied" translation="saint song">heiligenlied</tag>
      <tag standard-name="gebedslied" translation="prayer">gebedslied</tag>
    </tags>
    <melody>Hoe luid zong de leraar op de tinnen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Rumoldus Batavus</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Matheus worde van Christus <rhyme label="a" type="f">geroepen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Al van zynen Tol-banck <rhyme label="b" type="m">hoort</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Hy is hem terstont nae <rhyme label="a" type="f" corresp="#s1:l1">gheloopen</rhyme></l>
        <l id="s1:l4" met="4" type="-+">En was ghehoorsaem Godes <rhyme label="b" type="m" corresp="#s1:l2">woort</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Hy worde zyn Apostel rechte <rhyme label="b" type="m" corresp="#s1:l2">voort</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Ghy sondaers wilt niet <rhyme label="a" type="f" corresp="#s1:l1">wanhoopen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Christus om zyn bermherticheyt te <rhyme label="a" type="f">bethoonen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Aen die sondighe menschen <rhyme label="b" type="m">siet</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Hy is gheen wtnemer der <rhyme label="a" type="f" corresp="#s2:l1">persoonen</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Matheus is groote ghenade <rhyme label="b" type="m" corresp="#s2:l2">gheschit</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Want Godt en reeckent die zonde <rhyme label="b" type="m" corresp="#s2:l2">niet</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Alsmen penitencie gaet <rhyme label="a" type="f" corresp="#s2:l1">bethoonen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Matheus is hy den Heere <rhyme label="a" type="f">ghebleuen</rhyme>.</l>
        <l id="s3:l2" met="3" type="-+">Tot dat hy ten hemel op <rhyme label="b" type="m">clom</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Gods gheest is hem mede <rhyme label="a" type="f" corresp="#s3:l1">ghegeuen</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Hy preeckte acht iaeren int <rhyme label="b" type="m" corresp="#s3:l2">Iodendom</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Daer na reysde hy die landen <rhyme label="b" type="m" corresp="#s3:l2">om</rhyme></l>
        <l id="s3:l6" met="4" type="-+">T’Euangelie heeft hy oock <rhyme label="a" type="f" corresp="#s3:l1">beschreuen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Van daer is desen Apostel <rhyme label="a" type="f">ghetoghen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Door Egipten in moren <rhyme label="b" type="m">lant</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Twee touenaers daer de menschen <rhyme label="a" type="f" corresp="#s4:l1">bedroghen</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Die hy in de stadt van Nauauer <rhyme label="b" type="m" corresp="#s4:l2">vant</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Dese haer quaet bracht hy tot <rhyme label="b" type="m" corresp="#s4:l2">schant</rhyme></l>
        <l id="s4:l6" met="4" type="-+">En stelde haer Christum voor <rhyme label="a" type="f" corresp="#s4:l1">ooghen</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Den Coninckx Soon is op dat pas <rhyme label="a" type="f">gestoruen</rhyme>.</l>
        <l id="s5:l2" met="3" type="-+">Maer die Touenaers hadden daer aen geen <rhyme label="b" type="m">macht</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Matheus heeft hem t’leuen <rhyme label="a" type="f" corresp="#s5:l1">verworuen</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Door zyn ghebedt, en Godes <rhyme label="b" type="m" corresp="#s5:l2">cracht</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Den Coninck wort tot het geloof <rhyme label="b" type="m" corresp="#s5:l2">gebracht</rhyme></l>
        <l id="s5:l6" met="4" type="-+">En die touerije die is <rhyme label="a" type="f" corresp="#s5:l1">bedoruen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Veel menschen ghingen haer doen <rhyme label="a" type="f">bekeeren</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Maer den Coninck die storf met grooten <rhyme label="b" type="m">rouwe</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Hy hadde een schoone Dochter met <rhyme label="a" type="f" corresp="#s6:l1">eeren</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Dese begheerde zyn broeder tot een <rhyme label="b" type="m" corresp="#s6:l2">huysvrouwe</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Want hy was Coninck gheworden <rhyme label="b" type="m" corresp="#s6:l2">nu</rhyme></l>
        <l id="s6:l6" met="4" type="-+">Maer Matheus die dede het <rhyme label="a" type="f" corresp="#s6:l1">keeren</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Als Matheus nu desen Coninc <rhyme label="a" type="f">verclaerde</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Dat zy Christum hadde <rhyme label="b" type="m">getrout</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Dien zy haer suyuerheyt <rhyme label="a" type="f" corresp="#s7:l1">bewaerde</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Des hy hem niet belghen <rhyme label="b" type="m" corresp="#s7:l2">soudt</rhyme></l>
        <l id="s7:l5" met="4" type="-+">Maer den Coninck door gramschap <rhyme label="b" type="m" corresp="#s7:l2">stroudt</rhyme></l>
        <l id="s7:l6" met="4" type="-+">Sijn wreedheyt hy doen <rhyme label="a" type="f" corresp="#s7:l1">openbaerde</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Want zoo den Apostel aldaer <rhyme label="a" type="f">stonde</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Aen den autaer, en heeft <rhyme label="b" type="m">ghecelebreert</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Den Coninck ten Dienaer daer <rhyme label="a" type="f" corresp="#s8:l1">sonde</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Die door stack den Apostel met eenen <rhyme label="b" type="m" corresp="#s8:l2">sweert</rhyme></l>
        <l id="s8:l5" met="4" type="-+">Dus heeft hy God <rhyme label="b" type="m" corresp="#s8:l2">gheglorificeert</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Steruende door dese <rhyme label="a" type="f" corresp="#s8:l1">wonde</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">O Heer wilt ons met v bermhertighe <rhyme label="a" type="f">ooghen</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Sien aen, als ghy Matheus <rhyme label="b" type="m">deedt</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Op dat wy v oock volghen <rhyme label="a" type="f" corresp="#s9:l1">moghen</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Laet ons zonden ons oock zyn <rhyme label="b" type="m" corresp="#s9:l2">leedt</rhyme></l>
        <l id="s9:l5" met="4" type="-+">Van ons selfs wy niet goets connen, zo ghy <rhyme label="b" type="m" corresp="#s9:l2">weet</rhyme></l>
        <l id="s9:l6" met="4" type="-+">Maer moeten van v worden <rhyme label="a" type="f" corresp="#s9:l1">ghetooghen</rhyme></l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">O Godt ons v paden oock nae <rhyme label="a" type="f">treden</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Alzoo uwe vrienden hebben <rhyme label="b" type="m">ghedaen</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Aenhoort toch die ootmodighe <rhyme label="a" type="f" corresp="#s10:l1">gebeden</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Van die daer aen uwen autaer <rhyme label="b" type="m" corresp="#s10:l2">staen</rhyme></l>
        <l id="s10:l5" met="4" type="-+">Siet v Soons verdiensten voor ons daer <rhyme label="b" type="m" corresp="#s10:l2">aen</rhyme></l>
        <l id="s10:l6" met="4" type="-+">Bidden wy met <rhyme label="a" type="f" corresp="#s10:l1">ootmoedicheden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

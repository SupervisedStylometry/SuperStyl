  <author>Gijsbertus van Sandwijk</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Komt! den ij-ver <rhyme label="a" type="f">in-gespannen</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">'t Leeruur slaat, de school gaat <rhyme label="b" type="m">aan</rhyme>;</l>
        <l id="s1:l3" met="4" type="+-">Lui-heid, vadzigheid <rhyme label="a" type="f" corresp="#s1:l1">verbannen</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">En met lust aan 't werk <rhyme label="b" type="m" corresp="#s1:l2">ge-gaan</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">Onze kennis te <rhyme label="c" type="f">vermeêren</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Is steeds immer onze <rhyme label="d" type="m">zaak</rhyme>.</l>
        <l id="s1:l7" met="4" type="+-">Komt! nu vlijtig aan het <rhyme label="c" type="f" corresp="#s1:l5">leeren</rhyme>:</l>
        <l id="s1:l8" met="4" type="+-">'t Leeren schenkt het grootst <rhyme label="d" type="m" corresp="#s1:l6">vermaak</rhyme>.</l>
        <l id="s1:l9" met="4" type="+-">Komt! nu vlijtig aan het <rhyme label="c" type="f" corresp="#s1:l5">leeren</rhyme>:</l>
        <l id="s1:l10" met="4" type="+-">'t Leeren schenkt het grootst <rhyme label="d" type="m" corresp="#s1:l6">vermaak</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Komt! den ij-ver <rhyme label="a" type="f">in-gespannen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">'t Leeruur slaat, de school gaat <rhyme label="b" type="m">aan</rhyme>;</l>
        <l id="s2:l3" met="4" type="+-">Lui-heid, vadzigheid <rhyme label="a" type="f" corresp="#s2:l1">verbannen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">En met lust aan 't werk <rhyme label="b" type="m" corresp="#s2:l2">gegaan</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Onze kennis te <rhyme label="c" type="f">vermeêren</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Is steeds immer onze <rhyme label="d" type="m">zaak</rhyme>.</l>
        <l id="s2:l7" met="4" type="+-">Komt! nu vlijtig aan het <rhyme label="c" type="f" corresp="#s2:l5">leeren</rhyme>:</l>
        <l id="s2:l8" met="4" type="+-">'t Leeren schenkt het grootst <rhyme label="d" type="m" corresp="#s2:l6">vermaak</rhyme>.</l>
        <l id="s2:l9" met="4" type="+-">Komt! nu vlijtig aan het <rhyme label="c" type="f" corresp="#s2:l5">leeren</rhyme>:</l>
        <l id="s2:l10" met="4" type="+-">'t Leeren schenkt het grootst <rhyme label="d" type="m" corresp="#s2:l6">vermaak</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Laat ons wetenschap <rhyme label="a" type="f">vergâren</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Oogsten wij hier kennis <rhyme label="b" type="m">in</rhyme>;</l>
        <l id="s3:l3" met="4" type="+-">En in rijper <rhyme label="a" type="f" corresp="#s3:l1">levensjaren</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Schenkt ons dit het schoonst <rhyme label="b" type="m" corresp="#s3:l2">gewin</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Dit zij immer ons <rhyme label="c" type="f">begeeren</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Dat dan niets onze oefning <rhyme label="d" type="m">staak'</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Komt! nu vlijtig aan het <rhyme label="c" type="f" corresp="#s3:l5">leeren</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">'t Leeren schenkt het grootst <rhyme label="d" type="m" corresp="#s3:l6">vermaak</rhyme>.</l>
        <l id="s3:l9" met="4" type="+-">Komt! nu vlijtig aan het <rhyme label="c" type="f" corresp="#s3:l5">leeren</rhyme>,</l>
        <l id="s3:l10" met="4" type="+-">'t Leeren schenkt het grootst <rhyme label="d" type="m" corresp="#s3:l6">vermaak</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">DE blinde doolt met <rhyme label="a" type="f">zorghen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Volght blinden int <rhyme label="b" type="m">verdriet</rhyme>.</l>
        <l id="s1:l3" met="3" type="-+">Welx blindheyd is <rhyme label="a" type="f" corresp="#s1:l1">verborghen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Voor hem dies niet en <rhyme label="b" type="m" corresp="#s1:l2">ziet</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Vermoeyt in <rhyme label="c" type="f">onghenoeghen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Keert hy t'vernuft zyn <rhyme label="d" type="m">rug</rhyme>.</l>
        <l id="s1:l7" met="3" type="-+">En door zy pynnlick <rhyme label="c" type="f" corresp="#s1:l5">wroeghen</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Zoeckt hy een vaster <rhyme label="d" type="m" corresp="#s1:l6">brug</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Hy hoort des woords <rhyme label="a" type="f">oorkonden</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Begheerlick in zyn <rhyme label="b" type="m">hert</rhyme></l>
        <l id="s2:l3" met="3" type="-+">tWoord opent hem de <rhyme label="a" type="f" corresp="#s2:l1">wonden</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Van zynre zonden <rhyme label="b" type="m" corresp="#s2:l2">smert</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Het dreyght voor zyn <rhyme label="c" type="f">misdaden</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Des heren straffe <rhyme label="d" type="m">zwaar</rhyme>.</l>
        <l id="s2:l7" met="3" type="-+">tBelooft oock uyt <rhyme label="c" type="f" corresp="#s2:l5">ghenaden</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Den blinden oghen <rhyme label="d" type="m" corresp="#s2:l6">klaar</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">t'Opmercken ghaat voorts <rhyme label="a" type="f">toghen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Doort ondervinden <rhyme label="b" type="m">fyn</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Hoe dat de valsche <rhyme label="a" type="f" corresp="#s3:l1">loghen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Het quaad zeyt ghoed te <rhyme label="b" type="m" corresp="#s3:l2">zyn</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Dit doet na tquade <rhyme label="c" type="f">lusten</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">tWelck alle zonden <rhyme label="d" type="m">voedt</rhyme>.</l>
        <l id="s3:l7" met="3" type="-+">Dan tuyghen smerts <rhyme label="c" type="f" corresp="#s3:l5">onrusten</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Dat zond' haar zelve <rhyme label="d" type="m" corresp="#s3:l6">boet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Hier tert die ware <rhyme label="a" type="f">hate</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Den kop van tvalsch <rhyme label="b" type="m">Serpent</rhyme>.</l>
        <l id="s4:l3" met="3" type="-+">Tot blinden zo van <rhyme label="a" type="f" corresp="#s4:l1">state</rhyme></l>
        <l id="s4:l4" met="3" type="-+">De heer tghelove <rhyme label="b" type="m" corresp="#s4:l2">zent</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Dat zy dan ghaern <rhyme label="c" type="f">ontfangen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Om dat het hope <rhyme label="d" type="m">baart</rhyme>:</l>
        <l id="s4:l7" met="3" type="-+">En strecken snel haar <rhyme label="c" type="f" corresp="#s4:l5">gangen</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Van daard ten <rhyme label="d" type="m" corresp="#s4:l6">hemel-waart</rhyme></l>
      </lg>
    </lg>
  </text>

  <author>Philips van Marnix van Sint Aldegonde</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">DE Heer heerscht breet end' <rhyme label="a" type="m">wijt</rhyme>:</l>
        <l id="s1:l2" met="3" type="-+">Dies laet doch sijn <rhyme label="a" type="m" corresp="#s1:l1">verblijt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Het eirtrijck end <rhyme label="b" type="f">d'eylanden</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Mitgaders de <rhyme label="b" type="f" corresp="#s1:l3">zeestranden</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Die wolcken om sick <rhyme label="c" type="m">streckt</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Met duysternis <rhyme label="c" type="m" corresp="#s1:l5">bedeckt</rhyme>:</l>
        <l id="s1:l7" met="3" type="-+">Wiens throon staet vast <rhyme label="d" type="m">gesticht</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Op goet recht end <rhyme label="d" type="m" corresp="#s1:l7">gericht</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Seer reyn end <rhyme label="c" type="m" corresp="#s1:l5">onbevlect</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Vier ende <rhyme label="a" type="m">wederlicht</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Gaet voir sijn <rhyme label="a" type="m" corresp="#s2:l1">aengesicht</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Sijn vyanden <rhyme label="b" type="f">verrasschen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">End brandense tot <rhyme label="b" type="f" corresp="#s2:l3">asschen</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Wiens blixem vlammich <rhyme label="c" type="m">sweeft</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Alom, end van sick <rhyme label="c" type="m" corresp="#s2:l5">geeft</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Licht ende <rhyme label="d" type="m">wederglandtz</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Daer van het eirtrijck <rhyme label="d" type="m" corresp="#s2:l7">gantz</rhyme></l>
        <l id="s2:l9" met="3" type="-+">Van grooter vreese <rhyme label="c" type="m" corresp="#s2:l5">beeft</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">De bergen smilten <rhyme label="a" type="m">ras</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Niet anders als een <rhyme label="a" type="m" corresp="#s3:l1">was</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Voir t'aenschijn Gods <rhyme label="b" type="f">almachtich</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Des eirtrijcx heerscher <rhyme label="b" type="f" corresp="#s3:l3">crachtich</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Den hemel schoon end <rhyme label="c" type="m">klaer</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Met alle sijn <rhyme label="c" type="m" corresp="#s3:l5">heyrschaer</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Tuygt sijn <rhyme label="d" type="m">rechtveirdicheyt</rhyme></l>
        <l id="s3:l8" met="3" type="-+">End sijne <rhyme label="d" type="m" corresp="#s3:l7">weirdicheyt</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Siet al tvolck <rhyme label="c" type="m" corresp="#s3:l5">openbaer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Tvolck dat dient beelden <rhyme label="a" type="m">stom</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">End roemt den <rhyme label="a" type="m" corresp="#s4:l1">heyligdom</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Van sijn' <rhyme label="b" type="f">afgoderijen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Moet al tot schand <rhyme label="b" type="f" corresp="#s4:l3">gedijen</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Dient God ghy Goden <rhyme label="c" type="m">al</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Doet hem alleen <rhyme label="c" type="m" corresp="#s4:l5">voetval</rhyme>.</l>
        <l id="s4:l7" met="3" type="-+">End Sion die sulcx <rhyme label="d" type="m">hoort</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Sij van nu <rhyme label="d" type="m" corresp="#s4:l7">rechtevoort</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">Verheugt op d'eirtsche <rhyme label="c" type="m" corresp="#s4:l5">dal</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Om dijn gerichten <rhyme label="a" type="m">goet</rhyme></l>
        <l id="s5:l2" met="3" type="-+">So hebben met <rhyme label="a" type="m" corresp="#s5:l1">ootmoet</rhyme></l>
        <l id="s5:l3" met="3" type="-+">De dochters van <rhyme label="b" type="f">IudeÃ«n</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Gejuycht in rust end <rhyme label="b" type="f" corresp="#s5:l3">vreen</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">De bist verheven <rhyme label="c" type="m">seer</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Hoog boven d'eirtrijck <rhyme label="c" type="m" corresp="#s5:l5">Heer</rhyme>:</l>
        <l id="s5:l7" met="3" type="-+">Du hebst veel hooger <rhyme label="d" type="m">macht</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Van diemen goden <rhyme label="d" type="m" corresp="#s5:l7">acht</rhyme>:</l>
        <l id="s5:l9" met="3" type="-+">Oft diemen biedt Gods <rhyme label="c" type="m" corresp="#s5:l5">eer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ghy die den Heer <rhyme label="a" type="m">bemint</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">V herte sy <rhyme label="a" type="m" corresp="#s6:l1">gesint</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Om tboose na te <rhyme label="b" type="f">laten</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Ia gantselijck te <rhyme label="b" type="f" corresp="#s6:l3">haten</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Want God bewaert <rhyme label="c" type="m">gewis</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Elck dien hy gunstich <rhyme label="c" type="m" corresp="#s6:l5">is</rhyme>:</l>
        <l id="s6:l7" met="3" type="-+">End neemt haer sielen <rhyme label="d" type="m">waer</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Hy helpts oock in <rhyme label="d" type="m" corresp="#s6:l7">gevaer</rhyme></l>
        <l id="s6:l9" met="3" type="-+">Van s'boosen <rhyme label="c" type="m" corresp="#s6:l5">hindernis</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Tlicht is (oft schoon <rhyme label="a" type="m">verspaeyt</rhyme>)</l>
        <l id="s7:l2" met="3" type="-+">Den vromen <rhyme label="a" type="m" corresp="#s7:l1">toegesaeyt</rhyme>:</l>
        <l id="s7:l3" met="3" type="-+">End blijschap sonder <rhyme label="b" type="f">smerten</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Den mensch oprecht van <rhyme label="b" type="f" corresp="#s7:l3">herten</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">Dies weest in God <rhyme label="c" type="m">verblijt</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Al die godsalich <rhyme label="c" type="m" corresp="#s7:l5">sijt</rhyme>:</l>
        <l id="s7:l7" met="3" type="-+">Prijst end viert al te <rhyme label="d" type="m">saem</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Des Heeren heylgen <rhyme label="d" type="m" corresp="#s7:l7">naem</rhyme>,</l>
        <l id="s7:l9" met="3" type="-+">End eer <rhyme label="c" type="m" corresp="#s7:l5">gebenedijt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

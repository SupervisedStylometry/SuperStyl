<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>21380</id>
    <date>
      <year-start>1591</year-start>
      <year-end>1592</year-end>
    </date>
    <tags>
      <tag standard-name="schriftuurlijk lied" translation="scripture song">schriftuurlijk lied</tag>
      <tag standard-name="vermaanlied" translation="admonitory song">vermaanlied</tag>
    </tags>
    <melody>Te mei als alle vogels zingen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Soetken Gerijts</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ICk wil beghinnen een nieuwe <rhyme label="a" type="m">Liet</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Al heb ick weynich wijsheyt <rhyme label="a" type="m" corresp="#s1:l1">siet</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Het moet wat slechte <rhyme label="b" type="f">wesen</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Voor ionghe spruytkens het <rhyme label="a" type="m" corresp="#s1:l1">gheschiet</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Om Godt te leeren <rhyme label="b" type="f" corresp="#s1:l3">vresen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Die kinderen hoort dat rijcke gods <rhyme label="a" type="m">toe</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Ter wijlen si zijn so ick <rhyme label="a" type="m" corresp="#s2:l1">beuroe</rhyme></l>
        <l id="s2:l3" met="3" type="-+">In haer <rhyme label="b" type="f">onnoselheden</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Die aert en streckt niet tot het <rhyme label="a" type="m" corresp="#s2:l1">goe</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Maer gantsch tot <rhyme label="b" type="f" corresp="#s2:l3">ouertreden</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Des menschen hert dit is geen <rhyme label="a" type="m">gloos</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Dat is al van der ionckheyt <rhyme label="a" type="m" corresp="#s3:l1">boos</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Also daer staet <rhyme label="b" type="f">gheschreuen</rhyme></l>
        <l id="s3:l4" met="4" type="-+">O iuecht het is seer <rhyme label="a" type="m" corresp="#s3:l1">prijckeloos</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Of ghy nocht coomt int <rhyme label="b" type="f" corresp="#s3:l3">leuen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Den mensch was wel geschapen <rhyme label="a" type="m">reyn</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Onsterffelijck na het beelt Gods <rhyme label="a" type="m" corresp="#s4:l1">pleyn</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Maer Adam heeftet <rhyme label="b" type="f">verlooren</rhyme></l>
        <l id="s4:l4" met="4" type="-+">So dat wy moeten alle <rhyme label="a" type="m" corresp="#s4:l1">ghemeyn</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Van nieus worden <rhyme label="b" type="f" corresp="#s4:l3">ghebooren</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Beleeftheyt baert wel die <rhyme label="a" type="m">natuer</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Maer goddelijcke duechden <rhyme label="a" type="m" corresp="#s5:l1">puer</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Moet comen van bouen <rhyme label="b" type="f">neder</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Al valtet hier den vleesch wat <rhyme label="a" type="m" corresp="#s5:l1">suer</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Tot Godt te keeren <rhyme label="b" type="f" corresp="#s5:l3">weder</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Wel hem die vroech zijn vleesch <rhyme label="a" type="m">bedwingt</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">En nae denge poorte <rhyme label="a" type="m" corresp="#s6:l1">dringt</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Die totten leuen <rhyme label="b" type="f">leydet</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Niet in die vierighe poel en <rhyme label="a" type="m" corresp="#s6:l1">springt</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Och daer men huylt en <rhyme label="b" type="f" corresp="#s6:l3">schreijet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">So wie daer is een <rhyme label="a" type="m">luegenaer</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Al die quaet doen, haer deel is <rhyme label="a" type="m" corresp="#s7:l1">daer</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Om eeuwich lanck te <rhyme label="b" type="f">branden</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Daer sal zijn weening der oogen <rhyme label="a" type="m" corresp="#s7:l1">swaer</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">En knarsinghe der <rhyme label="b" type="f" corresp="#s7:l3">tanden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Hierom o ionckheyt leeft <rhyme label="a" type="m">bequaem</rhyme></l>
        <l id="s8:l2" met="4" type="-+">En weest v ouders <rhyme label="a" type="m" corresp="#s8:l1">ghehoorsaem</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Laet v wel <rhyme label="b" type="f">informeeren</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Op dat ghy Godt zijt <rhyme label="a" type="m" corresp="#s8:l1">aenghenaem</rhyme></l>
        <l id="s8:l5" met="3" type="-+">En wilt niet <rhyme label="b" type="f" corresp="#s8:l3">rebelleeren</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Ghy ouders uwen roep <rhyme label="a" type="m">vseert</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Tobias heeft zijn soon <rhyme label="a" type="m" corresp="#s9:l1">gheleert</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Al van zijn ionckheyt <rhyme label="b" type="f">waerlijck</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Hem in gods vreese <rhyme label="a" type="m" corresp="#s9:l1">ghefondeert</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Volcht dit exempel <rhyme label="b" type="f" corresp="#s9:l3">claerlijck</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Och Vrienden een onghetempert <rhyme label="a" type="m">paert</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Dat sal hert worden dit is den <rhyme label="a" type="m" corresp="#s10:l1">aert</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Een onghedwonghen <rhyme label="b" type="f">soone</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Wort stout en wilt, toch niet en <rhyme label="a" type="m" corresp="#s10:l1">spaert</rhyme></l>
        <l id="s10:l5" met="3" type="-+">Die roede hoort mijn <rhyme label="b" type="f" corresp="#s10:l3">toone</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Een goede soon verdraecht en <rhyme label="a" type="m">lijdt</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Dat zijnen vader die hem <rhyme label="a" type="m" corresp="#s11:l1">castijt</rhyme></l>
        <l id="s11:l3" met="3" type="-+">Maer bitterheyt moet niet <rhyme label="b" type="f">blijcken</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Ghy vaders toornicheyt <rhyme label="a" type="m" corresp="#s11:l1">ghecrijt</rhyme></l>
        <l id="s11:l5" met="3" type="-+">Moet van gods volck <rhyme label="b" type="f" corresp="#s11:l3">wijcken</rhyme></l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Die ouders moeten selfs gaen <rhyme label="a" type="m">voor</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Of anders gaetet lichtueerdich <rhyme label="a" type="m" corresp="#s12:l1">door</rhyme></l>
        <l id="s12:l3" met="3" type="-+">Die kinderen aen te <rhyme label="b" type="f">spreken</rhyme></l>
        <l id="s12:l4" met="4" type="-+">Men siet die schalcheyt wel ter <rhyme label="a" type="m" corresp="#s12:l1">cuer</rhyme></l>
        <l id="s12:l5" met="3" type="-+">Al in die ionckheyt <rhyme label="b" type="f" corresp="#s12:l3">steken</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">O lieue ionghe iuecht mocht <rhyme label="a" type="m">ghy</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">V houden van swerelts sonden <rhyme label="a" type="m" corresp="#s13:l1">vry</rhyme></l>
        <l id="s13:l3" met="3" type="-+">Tzijn dootelijcke <rhyme label="b" type="f">saecken</rhyme></l>
        <l id="s13:l4" met="4" type="-+">En staet niet haer <rhyme label="a" type="m" corresp="#s13:l1">hoouerdy</rhyme></l>
        <l id="s13:l5" met="3" type="-+">Wilt nae ootmoedicheyt <rhyme label="b" type="f" corresp="#s13:l3">haecken</rhyme>,</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Haer ydele vruecht wilt geen acht <rhyme label="a" type="m">slaen</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">Die werelt sal met haer lust <rhyme label="a" type="m" corresp="#s14:l1">vergaen</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Wilt vroech naet goede <rhyme label="b" type="f">pooghen</rhyme></l>
        <l id="s14:l4" met="4" type="-+">Wat in die werelt is wilt <rhyme label="a" type="m" corresp="#s14:l1">verstaen</rhyme></l>
        <l id="s14:l5" met="3" type="-+">Is hoomoet lust der <rhyme label="b" type="f" corresp="#s14:l3">ooghen</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">En dat en is van den vader <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">Maer van de werelt die daer sal <rhyme label="a" type="m" corresp="#s15:l1">siet</rhyme></l>
        <l id="s15:l3" met="3" type="-+">Vergaen wilt dit <rhyme label="b" type="f">gheloouen</rhyme></l>
        <l id="s15:l4" met="4" type="-+">Maer wie gods wille doet met <rhyme label="a" type="m" corresp="#s15:l1">vliet</rhyme></l>
        <l id="s15:l5" met="3" type="-+">Sal eeuwich leuen hier <rhyme label="b" type="f" corresp="#s15:l3">bouen</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">O ionghe iuecht dit schenck ick <rhyme label="a" type="m">dijn</rhyme></l>
        <l id="s16:l2" met="4" type="-+">Vreest Godt denckt om die helsche <rhyme label="a" type="m" corresp="#s16:l1">pijn</rhyme>,</l>
        <l id="s16:l3" met="3" type="-+">Op Godes woort wilt <rhyme label="b" type="f">passen</rhyme>,</l>
        <l id="s16:l4" met="4" type="-+">In goddelijcke duechden <rhyme label="a" type="m" corresp="#s16:l1">fijn</rhyme></l>
        <l id="s16:l5" met="3" type="-+">Laet v die heer <rhyme label="b" type="f" corresp="#s16:l3">opwassen</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">O iuecht vseert onthout wel <rhyme label="a" type="m">dit</rhyme></l>
        <l id="s17:l2" met="4" type="-+">Ick wensch v dat ghy <rhyme label="a" type="m" corresp="#s17:l1">onbesmet</rhyme></l>
        <l id="s17:l3" met="3" type="-+">Moecht [...]uen wilt dit <rhyme label="b" type="f">ramen</rhyme></l>
        <l id="s17:l4" met="4" type="-+">Oft dat ghy immers moecht worden een <rhyme label="a" type="m" corresp="#s17:l1">lidt</rhyme>,</l>
        <l id="s17:l5" met="3" type="-+">Aent lichaem Christi, <rhyme label="b" type="f" corresp="#s17:l3">Amen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

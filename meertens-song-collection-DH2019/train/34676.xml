    <melody>Schoon lief wil mij troost geven</melody>
    <categories>
      <category translation="seasons and annual events">jaarkring</category>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Philippus Jennyn</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">DEn tijdt ghestelt liep <rhyme label="a" type="f">t'enden</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Dat Godt ons soude <rhyme label="a" type="f" corresp="#s1:l1">senden</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Sijn ongheschapen <rhyme label="b" type="m">Soon</rhyme>;</l>
        <l id="s1:l4" met="3" type="-+">Den welcken het <rhyme label="c" type="f">gheslachte</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Van Isra-el <rhyme label="c" type="f" corresp="#s1:l4">verwachte</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Te sien in Davids <rhyme label="b" type="m" corresp="#s1:l3">throon</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Met Ioseph liet hy <rhyme label="a" type="f">paeren</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Een Maghet jongh van <rhyme label="a" type="f" corresp="#s2:l1">jaeren</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Op dat sy baeren <rhyme label="b" type="m">mocht</rhyme></l>
        <l id="s2:l4" met="3" type="-+">(Door 's Heylighs Gheest <rhyme label="c" type="f">ingheven</rhyme>)</l>
        <l id="s2:l5" met="3" type="-+">Den Schepper van het <rhyme label="c" type="f" corresp="#s2:l4">leven</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Soo langhen tijdt <rhyme label="b" type="m" corresp="#s2:l3">versocht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Mariam, sijn <rhyme label="a" type="f">beminde</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Vondt Ioseph vol van <rhyme label="a" type="f" corresp="#s3:l1">Kinde</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">En hy en wiste <rhyme label="b" type="m">niet</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Hoe in sijn liefste <rhyme label="c" type="f">Vrauwe</rhyme></l>
        <l id="s3:l5" met="3" type="-+">(Die hem was soo <rhyme label="c" type="f" corresp="#s3:l4">ghetrauwe</rhyme>)</l>
        <l id="s3:l6" met="3" type="-+">Die saecke was <rhyme label="b" type="m" corresp="#s3:l3">gheschiet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Hy docht, ick sal haer <rhyme label="a" type="f">laeten</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Waer op stracx Gods <rhyme label="a" type="f" corresp="#s4:l1">Legaeten</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Weest Ioseph niet <rhyme label="b" type="m">bevreest</rhyme>:</l>
        <l id="s4:l4" met="3" type="-+">Want datter is <rhyme label="c" type="f">gheboren</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">In u Lief <rhyme label="c" type="f" corresp="#s4:l4">wt-verkoren</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Is van den Heyl'ghen <rhyme label="b" type="m" corresp="#s4:l3">Gheest</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Een Sone sal sy <rhyme label="a" type="f">baeren</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Die ghy (naer ons <rhyme label="a" type="f" corresp="#s5:l1">verklaeren</rhyme>)</l>
        <l id="s5:l3" met="3" type="-+">Heer Iesus naemen <rhyme label="b" type="m">sult</rhyme>:</l>
        <l id="s5:l4" met="3" type="-+">Dat Lamke sonder <rhyme label="c" type="f">vlecken</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Sal 'sijne waerder <rhyme label="c" type="f" corresp="#s5:l4">trecken</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Der menschen swaere <rhyme label="b" type="m" corresp="#s5:l3">schult</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Hoe moest sich <rhyme label="a" type="f">verblijden</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Sint Ioseph, in die <rhyme label="a" type="f" corresp="#s6:l1">tijden</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Doen hy sijn Schepper <rhyme label="b" type="m">sagh</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Wt de <rhyme label="c" type="f">verholentheden</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Van sijn soet Lief als <rhyme label="c" type="f" corresp="#s6:l4">heden</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Ghekomen voor den <rhyme label="b" type="m" corresp="#s6:l3">dagh</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Lof Vader der <rhyme label="a" type="f">ghenaden</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Die sendt, om ons <rhyme label="a" type="f" corresp="#s7:l1">t'ontladen</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Dat Woordt <rhyme label="b" type="m">ghebenedijdt</rhyme>.</l>
        <l id="s7:l4" met="3" type="-+">Lof Iesu Davids <rhyme label="c" type="f">Soone</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Die van een Maghet <rhyme label="c" type="f" corresp="#s7:l4">schoone</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Voor ons gheboren <rhyme label="b" type="m" corresp="#s7:l3">zijt</rhyme>.</l>
      </lg>
    </lg>
  </text>

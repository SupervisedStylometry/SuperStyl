    <tags/>
    <melody>Gij die de naam van christen draagt</melody>
  <author>Dirk Rafaelsz. Camphuysen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">GHy die den naem van Christen <rhyme label="a" type="m">draeght</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">En zijt, of waent te <rhyme label="b" type="f">wezen</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Een die uws zielen heyl <rhyme label="a" type="m" corresp="#s1:l1">na-jaeght</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Geeft u dit Dicht te <rhyme label="b" type="f" corresp="#s1:l2">lezen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Gh' ontredt u die u redden <rhyme label="a" type="m">wilt</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Door handt-geweldt of <rhyme label="b" type="f">strijden</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">De beste redding vintm' in <rhyme label="a" type="m" corresp="#s2:l1">stilt'</rhyme></l>
        <l id="s2:l4" met="3" type="-+">En onverdroten <rhyme label="b" type="f" corresp="#s2:l2">lijden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Heeft u een kloecker pen of <rhyme label="a" type="m">stem</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Die Lesz' wel meer doen <rhyme label="b" type="f">hooren</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">De rijmpjens hebben me'e haer <rhyme label="a" type="m" corresp="#s3:l1">klem</rhyme></l>
        <l id="s3:l4" met="3" type="-+">In veler menschen <rhyme label="b" type="f" corresp="#s3:l2">ooren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">(Godt, oorspronck van des waerheydts <rhyme label="a" type="m">licht</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Klaer meer en meer de <rhyme label="b" type="f">oogen</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Van die dit leest, en die het <rhyme label="a" type="m" corresp="#s4:l1">dicht</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Dat Waerheydt gae voor <rhyme label="b" type="f" corresp="#s4:l2">Logen</rhyme>.)</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">'t Is waer, hy heeft niet onrechts <rhyme label="a" type="m">veur</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Die uyt ellend wil <rhyme label="b" type="f">raken</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Maer licht'lijck dooltmen in de <rhyme label="a" type="m" corresp="#s5:l1">keur</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Van Hoe en Door wat <rhyme label="b" type="f" corresp="#s5:l2">zaken</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">De reden-schijn, die of <rhyme label="a" type="m">bedrieght</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Of zou bedriegen <rhyme label="b" type="f">konnen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Wilt ghy verstaen hoe grof die <rhyme label="a" type="m" corresp="#s6:l1">lieght</rhyme>:</l>
        <l id="s6:l4" met="3" type="-+">Volgh ware Redens <rhyme label="b" type="f" corresp="#s6:l2">Zonne</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Is 't eygen wrake die u <rhyme label="a" type="m">port</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Uw vyandt te <rhyme label="b" type="f">bekrencken</rhyme>:</l>
        <l id="s7:l3" met="4" type="-+">De wreker koomt altijdt te <rhyme label="a" type="m" corresp="#s7:l1">kort</rhyme></l>
        <l id="s7:l4" met="3" type="-+">In al zijn doen en <rhyme label="b" type="f" corresp="#s7:l2">dencken</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Vooral, als uyt <rhyme label="a" type="m">gerechticheydt</rhyme></l>
        <l id="s8:l2" met="3" type="-+">De wraeck (als rechts) <rhyme label="b" type="f">genomen</rhyme></l>
        <l id="s8:l3" met="4" type="-+">De wreker na verdienst van 't <rhyme label="a" type="m" corresp="#s8:l1">feyt</rhyme></l>
        <l id="s8:l4" met="3" type="-+">De straffe wil <rhyme label="b" type="f" corresp="#s8:l2">betoomen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Doet ghy in 't wreken dan te <rhyme label="a" type="m">veel</rhyme>:</l>
        <l id="s9:l2" met="3" type="-+">Te veel, laet 's herten rust <rhyme label="b" type="f">niet</rhyme>.</l>
        <l id="s9:l3" met="4" type="-+">Doet ghy de wrake maer ten <rhyme label="a" type="m" corresp="#s9:l1">deel</rhyme>:</l>
        <l id="s9:l4" met="3" type="-+">Te weynigh, boet den lust <rhyme label="b" type="f" corresp="#s9:l2">niet</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Hy mengt vergif met <rhyme label="a" type="m">medecijn</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Die wraeck aen re'en wil <rhyme label="b" type="f">laszen</rhyme>:</l>
        <l id="s10:l3" met="4" type="-+">Waer dolle zinnen meester <rhyme label="a" type="m" corresp="#s10:l1">zijn</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Daer kanmen 't zelden <rhyme label="b" type="f" corresp="#s10:l2">paszen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Dat schielijck met gevaer <rhyme label="a" type="m">toegaet</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Wie mickt het daer zoo <rhyme label="b" type="f">effen</rhyme>?</l>
        <l id="s11:l3" met="4" type="-+">En in een zake zonder <rhyme label="a" type="m" corresp="#s11:l1">maet</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Kan niemandt mate <rhyme label="b" type="f" corresp="#s11:l2">treffen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">En schoon ghy treft het al na <rhyme label="a" type="m">waen</rhyme>:</l>
        <l id="s12:l2" met="3" type="-+">(Na waerheydt treft ghy 't <rhyme label="b" type="f">nimmer</rhyme>)</l>
        <l id="s12:l3" met="4" type="-+">Wat nut of voordeel koomt u <rhyme label="a" type="m" corresp="#s12:l1">aen</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Door 't ydel <rhyme label="b" type="f" corresp="#s12:l2">breyn-getimmer</rhyme>;</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Laes! wat genietmen uyt een <rhyme label="a" type="m">Niet</rhyme>?</l>
        <l id="s13:l2" met="3" type="-+">U smert moet smerte <rhyme label="b" type="f">blijven</rhyme>.</l>
        <l id="s13:l3" met="4" type="-+">En dat een ander quaedt <rhyme label="a" type="m" corresp="#s13:l1">geschiedt</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Kan 't uwe niet <rhyme label="b" type="f" corresp="#s13:l2">verdrijven</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">De arme wraeck en kan noch 't <rhyme label="a" type="m">quaedt</rhyme></l>
        <l id="s14:l2" met="3" type="-+">Noch 's quaedts geheughnis <rhyme label="b" type="f">weeren</rhyme>.</l>
        <l id="s14:l3" met="4" type="-+">En dieze willigh van hem <rhyme label="a" type="m" corresp="#s14:l1">laet</rhyme></l>
        <l id="s14:l4" met="3" type="-+">Koomt best tot zijn <rhyme label="b" type="f" corresp="#s14:l2">begeeren</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Geen reden-loozer lust noch <rhyme label="a" type="m">tocht</rhyme></l>
        <l id="s15:l2" met="3" type="-+">In 't gantsche menschen <rhyme label="b" type="f">herte</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">Dan dat smert-koeling wordt <rhyme label="a" type="m" corresp="#s15:l1">gezocht</rhyme></l>
        <l id="s15:l4" met="3" type="-+">In eenes anders <rhyme label="b" type="f" corresp="#s15:l2">smerte</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Door drijving eenes dollen <rhyme label="a" type="m">lusts</rhyme></l>
        <l id="s16:l2" met="3" type="-+">Wordt een ellendigh <rhyme label="b" type="f">wreker</rhyme></l>
        <l id="s16:l3" met="4" type="-+">Zijns naestens en zijns eygen <rhyme label="a" type="m" corresp="#s16:l1">rusts</rhyme></l>
        <l id="s16:l4" met="3" type="-+">En Christi Wets <rhyme label="b" type="f" corresp="#s16:l2">verbreker</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Doet ghy de wrake voor 't <rhyme label="a" type="m">Gemeyn</rhyme>:</l>
        <l id="s17:l2" met="3" type="-+">Ghy gaet des niet te <rhyme label="b" type="f">vaster</rhyme>.</l>
        <l id="s17:l3" met="4" type="-+">De last is zwaer, de wellust <rhyme label="a" type="m" corresp="#s17:l1">kleyn</rhyme>,</l>
        <l id="s17:l4" met="3" type="-+">En 't minste quaedt, 's volcks <rhyme label="b" type="f" corresp="#s17:l2">laster</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Geluckt de voorgenomen <rhyme label="a" type="m">daedt</rhyme>:</l>
        <l id="s18:l2" met="3" type="-+">'t Loon zal een handt vol windt <rhyme label="b" type="f">zijn</rhyme>;</l>
        <l id="s18:l3" met="4" type="-+">Loftuyting en een <rhyme label="a" type="m" corresp="#s18:l1">eeren-praet</rhyme></l>
        <l id="s18:l4" met="3" type="-+">Van die met u gezint <rhyme label="b" type="f" corresp="#s18:l2">zijn</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">Maer zoo ghy in 't voornemen <rhyme label="a" type="m">sneeft</rhyme>:</l>
        <l id="s19:l2" met="3" type="-+">Ghy blijft en zelfs <rhyme label="b" type="f">verlegen</rhyme>;</l>
        <l id="s19:l3" met="4" type="-+">En die 't geluck maer tegen <rhyme label="a" type="m" corresp="#s19:l1">heeft</rhyme>,</l>
        <l id="s19:l4" met="3" type="-+">Krijght heel de werelt <rhyme label="b" type="f" corresp="#s19:l2">tegen</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">Den algemeynen haet en <rhyme label="a" type="m">spot</rhyme></l>
        <l id="s20:l2" met="3" type="-+">Hebt gh' in d'ellendt te <rhyme label="b" type="f">wachten</rhyme>.</l>
        <l id="s20:l3" met="4" type="-+">Of over-boos, of al te <rhyme label="a" type="m" corresp="#s20:l1">bot</rhyme></l>
        <l id="s20:l4" met="3" type="-+">Zal u een yeder <rhyme label="b" type="f" corresp="#s20:l2">achten</rhyme>.</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="4" type="-+">Als ick des werelts doen <rhyme label="a" type="m">bepeyns</rhyme>,</l>
        <l id="s21:l2" met="3" type="-+">Wat is haer Luck, een <rhyme label="b" type="f">dwelm-luck</rhyme>!</l>
        <l id="s21:l3" met="4" type="-+">Geluckt den aenslagh, 't haet <rhyme label="a" type="m" corresp="#s21:l1">Romeyns</rhyme>;</l>
        <l id="s21:l4" met="3" type="-+">Misluck hy, 't is een <rhyme label="b" type="f" corresp="#s21:l2">schelm-stuck</rhyme>.</l>
      </lg>
      <lg id="s22" type="stanza">
        <l id="s22:l1" met="4" type="-+">'t Gevaer is groot, de vruchten <rhyme label="a" type="m">kranck</rhyme>,</l>
        <l id="s22:l2" met="3" type="-+">De scha'e meer dan 't genot <rhyme label="b" type="f">is</rhyme>.</l>
        <l id="s22:l3" met="4" type="-+">En schoon 't waer alle man te <rhyme label="a" type="m" corresp="#s22:l1">danck</rhyme>:</l>
        <l id="s22:l4" met="3" type="-+">Wat is 't als 't niet na Godt <rhyme label="b" type="f" corresp="#s22:l2">is</rhyme>?</l>
      </lg>
      <lg id="s23" type="stanza">
        <l id="s23:l1" met="4" type="-+">Het quaedt eyscht straf; het ong'lijck <rhyme label="a" type="m">wraeck</rhyme>:</l>
        <l id="s23:l2" met="3" type="-+">(Wat mensche zeyt daer Neen <rhyme label="b" type="f">toe</rhyme>;)</l>
        <l id="s23:l3" met="4" type="-+">Maer wieze doen zal, dat 's de <rhyme label="a" type="m" corresp="#s23:l1">zaeck</rhyme>.</l>
        <l id="s23:l4" met="3" type="-+">Godt eygentz' hem alleen <rhyme label="b" type="f" corresp="#s23:l2">toe</rhyme>.</l>
      </lg>
      <lg id="s24" type="stanza">
        <l id="s24:l1" met="4" type="-+">'t Is waer, hy wreeckt somwijlen 't <rhyme label="a" type="m">quaedt</rhyme></l>
        <l id="s24:l2" met="3" type="-+">Door menschen, zelfs door <rhyme label="b" type="f">snooden</rhyme>:</l>
        <l id="s24:l3" met="4" type="-+">Maer al wat Godt geschieden <rhyme label="a" type="m" corresp="#s24:l1">laet</rhyme></l>
        <l id="s24:l4" met="3" type="-+">En heeft hy niet <rhyme label="b" type="f" corresp="#s24:l2">geboden</rhyme>.</l>
      </lg>
      <lg id="s25" type="stanza">
        <l id="s25:l1" met="4" type="-+">Die wreeck-stof geven, maken 't <rhyme label="a" type="m">slecht</rhyme>;</l>
        <l id="s25:l2" met="3" type="-+">Die 't wreken, maken 't <rhyme label="b" type="f">grover</rhyme>:</l>
        <l id="s25:l3" met="4" type="-+">Dat alderhooghste <rhyme label="a" type="m" corresp="#s25:l1">Wrake-recht</rhyme></l>
        <l id="s25:l4" met="3" type="-+">Geeft Godt aen niemandt <rhyme label="b" type="f" corresp="#s25:l2">over</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

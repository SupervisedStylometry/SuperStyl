  <author>Jacob Groenewegen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Komt Iehovaas <rhyme label="a" type="f">lievelinge</rhyme>,</l>
        <l id="s1:l2" met="2" type="+-">Wilt nu <rhyme label="a" type="f" corresp="#s1:l1">zinge</rhyme>;</l>
        <l id="s1:l3" met="4" type="+-">Wekt u op tot Godes <rhyme label="b" type="m">lof</rhyme>:</l>
        <l id="s1:l4" met="4" type="+-">Waarom langer <rhyme label="c" type="f">neer’gebogen</rhyme>,</l>
        <l id="s1:l5" met="2" type="+-">Met u <rhyme label="c" type="f" corresp="#s1:l4">oogen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Heft u zielen uyt het <rhyme label="b" type="m" corresp="#s1:l3">stof</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Laat u herte zig <rhyme label="a" type="f">verblyde</rhyme>,</l>
        <l id="s2:l2" met="2" type="+-">t’Aller <rhyme label="a" type="f" corresp="#s2:l1">tyde</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">In den Heer u zalig <rhyme label="b" type="m">lot</rhyme>:</l>
        <l id="s2:l4" met="4" type="+-">Laat u mond u hert en <rhyme label="c" type="f">keele</rhyme>,</l>
        <l id="s2:l5" met="2" type="+-">Altijd <rhyme label="c" type="f" corresp="#s2:l4">kweele</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Zingt den lof van uwen <rhyme label="b" type="m" corresp="#s2:l3">God</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Zouden de arme <rhyme label="a" type="f">Wereldlinge</rhyme>,</l>
        <l id="s3:l2" met="2" type="+-">Iuyge <rhyme label="a" type="f" corresp="#s3:l1">zinge</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">In de boeije van de <rhyme label="b" type="m">hel</rhyme></l>
        <l id="s3:l4" met="4" type="+-">En zult gy zijn <rhyme label="c" type="f">Uytverkoore</rhyme>,</l>
        <l id="s3:l5" met="2" type="+-">En <rhyme label="c" type="f" corresp="#s3:l4">herboore</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Zitten als in druk en <rhyme label="b" type="m" corresp="#s3:l3">kwel</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Zou ’t geen stof van blijdschap <rhyme label="a" type="f">weeze</rhyme>,</l>
        <l id="s4:l2" met="2" type="+-">Die voor <rhyme label="a" type="f" corresp="#s4:l1">deeze</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Lag in Satans boze <rhyme label="b" type="m">net</rhyme>:</l>
        <l id="s4:l4" met="4" type="+-">Die uyt Duyvels sterke <rhyme label="c" type="f">banden</rhyme>,</l>
        <l id="s4:l5" met="2" type="+-">Door Gods <rhyme label="c" type="f" corresp="#s4:l4">handen</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Zijt getrokken en <rhyme label="b" type="m" corresp="#s4:l3">geret</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Ia die om u ziele <rhyme label="a" type="f">wouden</rhyme>,</l>
        <l id="s5:l2" met="2" type="+-">En u <rhyme label="a" type="f" corresp="#s5:l1">zouden</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Tot zijn eyge roem en <rhyme label="b" type="m">eer</rhyme>:</l>
        <l id="s5:l4" met="4" type="+-">Zijn Zoon zijn beste pand <rhyme label="c" type="f">gegeven</rhyme>,</l>
        <l id="s5:l5" met="2" type="+-">Heeft ten <rhyme label="c" type="f" corresp="#s5:l4">leeven</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Tot u Losser en u <rhyme label="b" type="m" corresp="#s5:l3">Heer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Al u schulden en <rhyme label="a" type="f">elenden</rhyme>,</l>
        <l id="s6:l2" met="2" type="+-">Komt hy <rhyme label="a" type="f" corresp="#s6:l1">wenden</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">En u zonden veel en <rhyme label="b" type="m">groot</rhyme>:</l>
        <l id="s6:l4" met="4" type="+-">Die verzoent hy door zijn <rhyme label="c" type="f">lyden</rhyme>,</l>
        <l id="s6:l5" met="2" type="+-">Om te <rhyme label="c" type="f" corresp="#s6:l4">vryden</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">U voor eeuwig van den <rhyme label="b" type="m" corresp="#s6:l3">dood</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Nu zal Gods haat over ’t <rhyme label="a" type="f">quade</rhyme>,</l>
        <l id="s7:l2" met="2" type="+-">U niet <rhyme label="a" type="f" corresp="#s7:l1">schade</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Want gy zijt met God <rhyme label="b" type="m">bevrind</rhyme>:</l>
        <l id="s7:l4" met="4" type="+-">Die u eer gy waart <rhyme label="c" type="f">geboore</rhyme>,</l>
        <l id="s7:l5" met="2" type="+-"><rhyme label="c" type="f" corresp="#s7:l4">Uytverkooren</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">En met liefde heeft <rhyme label="b" type="m" corresp="#s7:l3">bemind</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Dat is stoffen t’allen <rhyme label="a" type="f">tyden</rhyme>,</l>
        <l id="s8:l2" met="2" type="+-">Tot <rhyme label="a" type="f" corresp="#s8:l1">verblyden</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Omin God te zijn <rhyme label="b" type="m">verheugt</rhyme>:</l>
        <l id="s8:l4" met="4" type="+-">Dat is stof om op te <rhyme label="c" type="f">springen</rhyme>,</l>
        <l id="s8:l5" met="2" type="+-">En te <rhyme label="c" type="f" corresp="#s8:l4">zingen</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Dat is wezenlyke <rhyme label="b" type="m" corresp="#s8:l3">vreugt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Zout gy niet u stem doen <rhyme label="a" type="f">hooren</rhyme>,</l>
        <l id="s9:l2" met="2" type="+-"><rhyme label="a" type="f" corresp="#s9:l1">Uytverkooren</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Lievelinge van u <rhyme label="b" type="m">God</rhyme>:</l>
        <l id="s9:l4" met="4" type="+-">Die eens in volmaakte <rhyme label="c" type="f">deugden</rhyme>,</l>
        <l id="s9:l5" met="2" type="+-">Eeuwig <rhyme label="c" type="f" corresp="#s9:l4">vreugden</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">Zult genieten en wiens <rhyme label="b" type="m" corresp="#s9:l3">lot</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Zijn zal eeuwig te <rhyme label="a" type="f">verkeere</rhyme>,</l>
        <l id="s10:l2" met="2" type="+-">By den <rhyme label="a" type="f" corresp="#s10:l1">Heere</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Als de dood u ooge <rhyme label="b" type="m">sluyt</rhyme>:</l>
        <l id="s10:l4" met="4" type="+-">En bevrijt van smert en <rhyme label="c" type="f">rouwen</rhyme>,</l>
        <l id="s10:l5" met="2" type="+-">Zult <rhyme label="c" type="f" corresp="#s10:l4">aanschouwen</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">God, o uytverkoore <rhyme label="b" type="m" corresp="#s10:l3">Bruyt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Daar zult g’eeuwig zijn <rhyme label="a" type="f">ontbonden</rhyme>,</l>
        <l id="s11:l2" met="2" type="+-">Van de <rhyme label="a" type="f" corresp="#s11:l1">zonden</rhyme>,</l>
        <l id="s11:l3" met="4" type="+-">’t Witte kleed van <rhyme label="b" type="m">heyligheid</rhyme>:</l>
        <l id="s11:l4" met="4" type="+-">Eeuwig drage nagt en <rhyme label="c" type="f">dage</rhyme>,</l>
        <l id="s11:l5" met="2" type="+-">Zonder <rhyme label="c" type="f" corresp="#s11:l4">vrage</rhyme>,</l>
        <l id="s11:l6" met="4" type="+-">Na de dagen uur of <rhyme label="b" type="m" corresp="#s11:l3">tijd</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">En u ziele eeuwig <rhyme label="a" type="f">zinken</rhyme>,</l>
        <l id="s12:l2" met="2" type="+-">En <rhyme label="a" type="f" corresp="#s12:l1">verdrinken</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">Sonder ruste dag of <rhyme label="b" type="m">nagt</rhyme>:</l>
        <l id="s12:l4" met="4" type="+-">Eeuwig roeme love <rhyme label="c" type="f">prijzen</rhyme>,</l>
        <l id="s12:l5" met="2" type="+-">Eer <rhyme label="c" type="f" corresp="#s12:l4">bewyzen</rhyme>,</l>
        <l id="s12:l6" met="4" type="+-">’t Lam dat voor u is <rhyme label="b" type="m" corresp="#s12:l3">geslagt</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Rigt dan op u hert na <rhyme label="a" type="f">boven</rhyme>,</l>
        <l id="s13:l2" met="2" type="+-">Om te <rhyme label="a" type="f" corresp="#s13:l1">looven</rhyme>,</l>
        <l id="s13:l3" met="4" type="+-">Hem die u heeft lief <rhyme label="b" type="m">gehat</rhyme>:</l>
        <l id="s13:l4" met="4" type="+-">En u eer gy waart <rhyme label="c" type="f">gebooren</rhyme>,</l>
        <l id="s13:l5" met="2" type="+-"><rhyme label="c" type="f" corresp="#s13:l4">Uytverkooren</rhyme>,</l>
        <l id="s13:l6" met="4" type="+-">Voor de zalige Hemel <rhyme label="b" type="m" corresp="#s13:l3">stat</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">Hou dan op van treurig <rhyme label="a" type="f">leeven</rhyme>,</l>
        <l id="s14:l2" met="2" type="+-">Soeckt te <rhyme label="a" type="f" corresp="#s14:l1">zweeven</rhyme>,</l>
        <l id="s14:l3" met="4" type="+-">Bove stof van druk en <rhyme label="b" type="m">zorg</rhyme>:</l>
        <l id="s14:l4" met="4" type="+-">Sijn’t de zonde die u <rhyme label="c" type="f">wonden</rhyme>,</l>
        <l id="s14:l5" met="2" type="+-">G’hebt <rhyme label="c" type="f" corresp="#s14:l4">gevonden</rhyme>,</l>
        <l id="s14:l6" met="4" type="+-">Iezus tot u vaste <rhyme label="b" type="m" corresp="#s14:l3">borg</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="+-">Soekt dan hier u stem te <rhyme label="a" type="f">pare</rhyme>,</l>
        <l id="s15:l2" met="2" type="+-">Met die <rhyme label="a" type="f" corresp="#s15:l1">schaare</rhyme>,</l>
        <l id="s15:l3" met="4" type="+-">Die met u des Heeren <rhyme label="b" type="m">lof</rhyme>,</l>
        <l id="s15:l4" met="4" type="+-">Eeuwiglijck uyt zullen <rhyme label="c" type="f">galmen</rhyme>,</l>
        <l id="s15:l5" met="2" type="+-">Met die <rhyme label="c" type="f" corresp="#s15:l4">Psalmen</rhyme>,</l>
        <l id="s15:l6" met="4" type="+-">Die men zingt aan ’t hemels <rhyme label="b" type="m" corresp="#s15:l3">hof</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

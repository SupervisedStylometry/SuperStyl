    <melody>Durch Adams Fall ist ganz verderbt</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">WEl hem die Goet den Armen <rhyme label="a" type="m">doet</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Dien sal de HEER <rhyme label="b" type="f">bevrijden</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Ter booser Tijdt Godt hem <rhyme label="a" type="m" corresp="#s1:l1">behoedt</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Voor t'quade t'allen <rhyme label="b" type="f" corresp="#s1:l2">zijden</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">De HEEr sal hem in Noodes <rhyme label="c" type="m">Tijdt</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Behouden by den <rhyme label="d" type="f">Leven</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Op Aerd' wel laten gaen, En <rhyme label="c" type="m" corresp="#s1:l5">niet</rhyme></l>
        <l id="s1:l8" met="3" type="-+">In s'Vyandts Will' hem <rhyme label="d" type="f" corresp="#s1:l6">gheven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">De HEEr sal hem verquicken <rhyme label="a" type="m">fijn</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Opt Bedde synder <rhyme label="b" type="f">smerten</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Hem helpen van de groote <rhyme label="a" type="m" corresp="#s2:l1">Pijn</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En Cranckheyt synder <rhyme label="b" type="f" corresp="#s2:l2">Herten</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Ick sprack: HEEr zijt ghenadich <rhyme label="c" type="m">my</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Mijn Siel help, bidd' ick <rhyme label="d" type="f">seere</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Want all' mijn Daghen ick aen <rhyme label="c" type="m" corresp="#s2:l5">dy</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Heb swaer ghesondicht <rhyme label="d" type="f" corresp="#s2:l6">HEEre</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Mijn Vyanden quaet spreken <rhyme label="a" type="m">mijn</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Wanneer sal hy doch <rhyme label="b" type="f">sterven</rhyme>?</l>
        <l id="s3:l3" met="4" type="-+">Met hem vergaen de Name <rhyme label="a" type="m" corresp="#s3:l1">syn</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Omcomen en <rhyme label="b" type="f" corresp="#s3:l2">verderven</rhyme>?</l>
        <l id="s3:l5" met="4" type="-+">Sy comen wel t'Aenschouwen <rhyme label="c" type="m">Yet</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Van binnen sy doch <rhyme label="d" type="f">Vloecken</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Van Herten sy my nieymen <rhyme label="c" type="m" corresp="#s3:l5">niet</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">T' is Last'ren wat sy <rhyme label="d" type="f" corresp="#s3:l6">soecken</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Gaen heenen en verbreyden <rhyme label="a" type="m">dat</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">End' alle die my <rhyme label="b" type="f">Haten</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Die soecken teghen my maer <rhyme label="a" type="m" corresp="#s4:l1">wat</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Om my te moghen <rhyme label="b" type="f" corresp="#s4:l2">vaten</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">En dencken t'Boose over <rhyme label="c" type="m">my</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Oock all' haer <rhyme label="d" type="f">Metghenooten</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Want een Boevenstuck hebben <rhyme label="c" type="m" corresp="#s4:l5">sy</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Schoon over my <rhyme label="d" type="f" corresp="#s4:l6">beslooten</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Hy sal niet als hy leydt ter <rhyme label="a" type="m">Doot</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Meer op staen: Mijn Vriendt <rhyme label="b" type="f">mede</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Dien ick betroud', end' Att mijn <rhyme label="a" type="m" corresp="#s5:l1">Broot</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Met Voeten my gaet <rhyme label="b" type="f" corresp="#s5:l2">treden</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Maer ghy HEEr weest ghenadich <rhyme label="c" type="m">my</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Dat ick coom wter <rhyme label="d" type="f">qualen</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Help my doch op, en staet my <rhyme label="c" type="m" corresp="#s5:l5">by</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">So wil ick haer <rhyme label="d" type="f" corresp="#s5:l6">betalen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Daer by merck ick, dat ghy aen <rhyme label="a" type="m">my</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Hebt Lust en <rhyme label="b" type="f">Welbehaghen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Dat over my mijn Vyandt <rhyme label="a" type="m" corresp="#s6:l1">ghy</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Gheen BLijdtschap en laet <rhyme label="b" type="f" corresp="#s6:l2">draghen</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Maer ghy hebt my O Heer mijn <rhyme label="c" type="m">Godt</rhyme></l>
        <l id="s6:l6" met="3" type="-+">(Midts ick op u <rhyme label="d" type="f">Betrouden</rhyme>)</l>
        <l id="s6:l7" met="4" type="-+">Om my der Onschult in der <rhyme label="c" type="m" corresp="#s6:l5">Noot</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Verlost en wel <rhyme label="d" type="f" corresp="#s6:l6">behouden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Ghy hebt my voor u <rhyme label="a" type="m">Aenghesicht</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Ghestelt oock Eewich <rhyme label="b" type="f">HEEre</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Ghelooft sy Godt die my <rhyme label="a" type="m" corresp="#s7:l1">opricht</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Dat ick leve in <rhyme label="b" type="f" corresp="#s7:l2">Eere</rhyme></l>
        <l id="s7:l5" met="4" type="-+">En prijse syn <rhyme label="c" type="m">Barmherticheyt</rhyme></l>
        <l id="s7:l6" met="3" type="-+">En Goedicheyt te <rhyme label="d" type="f">samen</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">Van nu aen tot in <rhyme label="c" type="m" corresp="#s7:l5">Eewicheyt</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">End' heylighen syn <rhyme label="d" type="f" corresp="#s7:l6">Name</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

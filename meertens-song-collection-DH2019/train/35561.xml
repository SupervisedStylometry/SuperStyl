      <tag standard-name="devoot lied" translation="devotional song">devoot lied</tag>
    </tags>
    <melody>Adieu nymphe du bois</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Joannes de Lixbona</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">DE ziele, die daer <rhyme label="a" type="m">woont</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Daer haer de vreught <rhyme label="a" type="m" corresp="#s1:l1">vertoont</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Van 't Goddelijck <rhyme label="b" type="f">ghenieten</rhyme>;</l>
        <l id="s1:l4" met="3" type="-+">Versinckt in <rhyme label="c" type="m">overvloet</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Van de wellusten <rhyme label="c" type="m" corresp="#s1:l4">soet</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Die sulck een ziel <rhyme label="b" type="f" corresp="#s1:l3">doorvlieten</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Wat vreughden dat het <rhyme label="a" type="m">zijn</rhyme>.</l>
        <l id="s2:l2" met="3" type="-+">Te staen voor Godts <rhyme label="a" type="m" corresp="#s2:l1">aenschijn</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Wat hemelsche <rhyme label="b" type="f">wellusten</rhyme>;</l>
        <l id="s2:l4" met="3" type="-+">Smaeckt die daer is <rhyme label="c" type="m">ontvlucht</rhyme></l>
        <l id="s2:l5" met="3" type="-+">'T verganckelijck <rhyme label="c" type="m" corresp="#s2:l4">gherucht</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Der nederste <rhyme label="b" type="f" corresp="#s2:l3">onruste</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">O vreught van dien <rhyme label="a" type="m">vondt</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Dat sulcken ziel <rhyme label="a" type="m" corresp="#s3:l1">door-grondt</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Ghestelt in dat <rhyme label="b" type="f">verblijden</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">In dat eeuwich <rhyme label="c" type="m">gheniet</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Dat haer de Waerheyt <rhyme label="c" type="m" corresp="#s3:l4">biet</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Voor haer grondich <rhyme label="b" type="f" corresp="#s3:l3">vertijden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Dat is dat eenich <rhyme label="a" type="m">Een</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Dat celleken <rhyme label="a" type="m" corresp="#s4:l1">alleen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Daer sy haer moet <rhyme label="b" type="f">besluyten</rhyme>:</l>
        <l id="s4:l4" met="3" type="-+">Daer strijdt en <rhyme label="c" type="m">teghen-strijdt</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">En wat is inden <rhyme label="c" type="m" corresp="#s4:l4">tijdt</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Wordt al ghesloten <rhyme label="b" type="f" corresp="#s4:l3">buyten</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">In die gheruste <rhyme label="a" type="m">stee</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">In dien soeten <rhyme label="a" type="m" corresp="#s5:l1">vre</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">In dat hemelsch <rhyme label="b" type="f">bevinden</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Mach die bly ziel <rhyme label="c" type="m">gheset</rhyme></l>
        <l id="s5:l5" met="3" type="-+">In stilte, <rhyme label="c" type="m" corresp="#s5:l4">on-belet</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Omhelsen den <rhyme label="b" type="f" corresp="#s5:l3">Beminden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Heel mach sy in hem <rhyme label="a" type="m">gaen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Heel doen sijn liefde <rhyme label="a" type="m" corresp="#s6:l1">aen</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Heel staen in hem <rhyme label="b" type="f">verslonden</rhyme>.</l>
        <l id="s6:l4" met="3" type="-+">Die plaets is <rhyme label="c" type="m">aenghenaem</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Dat celleken <rhyme label="c" type="m" corresp="#s6:l4">bequaem</rhyme>:</l>
        <l id="s6:l6" met="3" type="-+">Den vrede is <rhyme label="b" type="f" corresp="#s6:l3">ghevonden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Sy heeft hem hier te <rhyme label="a" type="m">gast</rhyme>:</l>
        <l id="s7:l2" met="3" type="-+">Sy moet hem houden <rhyme label="a" type="m" corresp="#s7:l1">vast</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Die haren Al moet <rhyme label="b" type="f">wesen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Die haere trouw <rhyme label="c" type="m">verdient</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Die zijn wilt haeren <rhyme label="c" type="m" corresp="#s7:l4">vrient</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Die haer heeft <rhyme label="b" type="f" corresp="#s7:l3">uyt-ghelesen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Haer heeft hy <rhyme label="a" type="m">in-gheleyt</rhyme>:</l>
        <l id="s8:l2" met="3" type="-+">Sy sit in <rhyme label="a" type="m" corresp="#s8:l1">sekerheyt</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Niet en can haer <rhyme label="b" type="f">misschieden</rhyme>.</l>
        <l id="s8:l4" met="3" type="-+">Den Liefste is haer <rhyme label="c" type="m">by</rhyme>:</l>
        <l id="s8:l5" met="3" type="-+">Sy sit aen sijne <rhyme label="c" type="m" corresp="#s8:l4">zy</rhyme>:</l>
        <l id="s8:l6" met="3" type="-+">Voor niet en moet sy <rhyme label="b" type="f" corresp="#s8:l3">vlieden</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Hy is, die in haer <rhyme label="a" type="m">werckt</rhyme>;</l>
        <l id="s9:l2" met="3" type="-+">Hy is, die haer <rhyme label="a" type="m" corresp="#s9:l1">versterckt</rhyme>:</l>
        <l id="s9:l3" met="3" type="-+">Sy staen in een <rhyme label="b" type="f">versoncken</rhyme>.</l>
        <l id="s9:l4" met="3" type="-+">In een volcomen <rhyme label="c" type="m">vreught</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">In eenicheyt <rhyme label="c" type="m" corresp="#s9:l4">verheught</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">In eenicheyt <rhyme label="b" type="f" corresp="#s9:l3">verdroncken</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Gheen blijschap dies <rhyme label="a" type="m">ghelijck</rhyme>:</l>
        <l id="s10:l2" met="3" type="-+">Sy woont in <rhyme label="a" type="m" corresp="#s10:l1">hemel-rijck</rhyme>:</l>
        <l id="s10:l3" met="3" type="-+">Sy rust in't eeuwich <rhyme label="b" type="f">leven</rhyme>.</l>
        <l id="s10:l4" met="3" type="-+">Den vrede, daer sy <rhyme label="c" type="m">leeft</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Die ruste, die sy <rhyme label="c" type="m" corresp="#s10:l4">heeft</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Zijn haer van Godt <rhyme label="b" type="f" corresp="#s10:l3">ghegheven</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">'Tis daer dat hy haer <rhyme label="a" type="m">leert</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Te wesen <rhyme label="a" type="m" corresp="#s11:l1">in-ghekeert</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Te blijven <rhyme label="b" type="f">in-ghetoghen</rhyme>:</l>
        <l id="s11:l4" met="3" type="-+">Te leven <rhyme label="c" type="m">op-gherecht</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Te woonen <rhyme label="c" type="m" corresp="#s11:l4">in-ghehecht</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Te rusten <rhyme label="b" type="f" corresp="#s11:l3">on-bedroghen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Godts weelden <rhyme label="a" type="m">allegaer</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Godts rijckheydt die is <rhyme label="a" type="m" corresp="#s12:l1">daer</rhyme>:</l>
        <l id="s12:l3" met="3" type="-+">Daer zijn Godts <rhyme label="b" type="f">soeticheden</rhyme>.</l>
        <l id="s12:l4" met="3" type="-+">Vol troost is haren <rhyme label="c" type="m">gheest</rhyme>;</l>
        <l id="s12:l5" met="3" type="-+">Sy sit in volle <rhyme label="c" type="m" corresp="#s12:l4">feest</rhyme>:</l>
        <l id="s12:l6" met="3" type="-+">Sy rust in vollen <rhyme label="b" type="f" corresp="#s12:l3">vreden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

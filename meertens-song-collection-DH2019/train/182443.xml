    <tags/>
    <melody>Aanhoor gij dochters en jongmans al</melody>
  <author>Tannetge Kornelis Blok</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Het is ten hoogsten <rhyme label="a" type="m">aengenaem</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Voor onsen God <rhyme label="b" type="m">wanneer</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Dat zig de Menschen al te <rhyme label="a" type="m" corresp="#s1:l1">saem</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Gaen schikken na zijn <rhyme label="b" type="m" corresp="#s1:l2">Leer</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Insonderheid wanneer de <rhyme label="c" type="m">Ieugt</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Het jok des Heeren <rhyme label="d" type="m">draegt</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">En haer gewennen tot de <rhyme label="c" type="m" corresp="#s1:l5">deugt</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Gelijk het God <rhyme label="d" type="m" corresp="#s1:l6">behaegt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">De eerste vrugten van het <rhyme label="a" type="m">Land</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Die wierden na de <rhyme label="b" type="m">wet</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Geheyligt tot een <rhyme label="a" type="m" corresp="#s2:l1">Offerhand</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Den Heere voor <rhyme label="b" type="m" corresp="#s2:l2">geset</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Waer aen men wel bemerken <rhyme label="c" type="m">kan</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Hoe seer het God <rhyme label="d" type="m">behaegt</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Wanneer men al van jongs of <rhyme label="c" type="m" corresp="#s2:l5">an</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Het jok des Heeren <rhyme label="d" type="m" corresp="#s2:l6">draegt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Wy vinden in des Heeren <rhyme label="a" type="m">Boek</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Ook veel geschreven <rhyme label="b" type="m">staen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Van jonge lieden wijs en <rhyme label="a" type="m" corresp="#s3:l1">kloek</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Die goed hebben <rhyme label="b" type="m" corresp="#s3:l2">gedaen</rhyme>.</l>
        <l id="s3:l5" met="4" type="-+">Die heilig en regtveerdig <rhyme label="c" type="m">zeer</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Hier leefden met ‘er <rhyme label="d" type="m">daet</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Soo dat als tot haer lof en <rhyme label="c" type="m" corresp="#s3:l5">eer</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Nu nog geschreven <rhyme label="d" type="m" corresp="#s3:l6">staet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Van den regtveerdigen <rhyme label="a" type="m">Abel</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Den kuysschen Ioseph <rhyme label="b" type="m">mee</rhyme>;</l>
        <l id="s4:l3" met="4" type="-+">Ook den Heiligen <rhyme label="a" type="m" corresp="#s4:l1">Daniel</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Die veel gebeden <rhyme label="b" type="m" corresp="#s4:l2">dee</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Den jongen Koning <rhyme label="c" type="m">Iosias</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Die zogt zijn Vaders <rhyme label="d" type="m">God</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Doen hy nog in zijn jonkheid <rhyme label="c" type="m" corresp="#s4:l5">was</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Volbragt hy Gods <rhyme label="d" type="m" corresp="#s4:l6">gebod</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Wy lesen van Timotheus, <rhyme label="a" type="m">dat</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Hy al van jongs af <rhyme label="b" type="m">aen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">De heilige Schrift geweeten <rhyme label="a" type="m" corresp="#s5:l1">had</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">En had genomen <rhyme label="b" type="m" corresp="#s5:l2">aen</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Een ongeveynst geloove <rhyme label="c" type="m">sterk</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">En ging doen zijnen <rhyme label="d" type="m">tijd</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Besteden in des Heeren <rhyme label="c" type="m" corresp="#s5:l5">werk</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">En dat met gantscher <rhyme label="d" type="m" corresp="#s5:l6">vlijt</rhyme>,</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Te prijsen zijn sy <rhyme label="a" type="m">allegaer</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Die dees voorbeelden <rhyme label="b" type="m">goet</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Ook in haer jonkheid volgen <rhyme label="a" type="m" corresp="#s6:l1">naer</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">En in Gods vreese <rhyme label="b" type="m" corresp="#s6:l2">soet</rhyme>.</l>
        <l id="s6:l5" met="4" type="-+">Haer doen en laten stellen <rhyme label="c" type="m">aen</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Gelijk als dat <rhyme label="d" type="m">behoort</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">En als de Heer ons te <rhyme label="c" type="m" corresp="#s6:l5">verstaen</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Geeft, in sijn heylig <rhyme label="d" type="m" corresp="#s6:l6">woord</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Eert u Vader en Moeder <rhyme label="a" type="m">seer</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Gy kind’ren al te <rhyme label="b" type="m">saem</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Weest haer gehoorsaem in den <rhyme label="a" type="m" corresp="#s7:l1">Heer</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Seyt Paulus seer <rhyme label="b" type="m" corresp="#s7:l2">bequaem</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Want dat is het eerste <rhyme label="c" type="m">gebod</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Dat een belofte <rhyme label="d" type="m">heeft</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">Op dat het u wel gaet zeyt <rhyme label="c" type="m" corresp="#s7:l5">God</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">En lang op aerden <rhyme label="d" type="m" corresp="#s7:l6">leeft</rhyme>,</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Ia niet alleen en zijn zy <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Gesegent op der <rhyme label="b" type="m">aerd</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Maer van dat eeuwige <rhyme label="a" type="m" corresp="#s8:l1">verdriet</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Hier namaels ook <rhyme label="b" type="m" corresp="#s8:l2">bewaerd</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">God zal haer in des hemels <rhyme label="c" type="m">Throon</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Die voor haer is <rhyme label="d" type="m">bereid</rhyme>,</l>
        <l id="s8:l7" met="4" type="-+">Beschenken met des Levens <rhyme label="c" type="m" corresp="#s8:l5">kroon</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Tot in der <rhyme label="d" type="m" corresp="#s8:l6">eeuwigheid</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Geen vreugde van de wereld <rhyme label="a" type="m">kan</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Hier by geleken <rhyme label="b" type="m">zijn</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Die zy zullen genieten <rhyme label="a" type="m" corresp="#s9:l1">dan</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Wanneer sy het <rhyme label="b" type="m" corresp="#s9:l2">aenschijn</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Aenschouwen van dien grooten <rhyme label="c" type="m">God</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">En sijn beminden <rhyme label="d" type="m">Zoon</rhyme>,</l>
        <l id="s9:l7" met="4" type="-+">ô Heer wild ons dit zalig <rhyme label="c" type="m" corresp="#s9:l5">lot</rhyme></l>
        <l id="s9:l8" met="3" type="-+">Geven tot eenen <rhyme label="d" type="m" corresp="#s9:l6">loon</rhyme></l>
      </lg>
    </lg>
  </text>
</song>

  <author>Pieter Datheen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="5" type="-+">NAE dat ick langhen tijdt hebbe <rhyme label="a" type="m">verwacht</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Den wille Godts in myn <rhyme label="b" type="m">elendt</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">So heeft hy hem tot my <rhyme label="b" type="m" corresp="#s1:l2">gewendt</rhyme>,</l>
        <l id="s1:l4" met="5" type="-+">End' heeft verhoort in den noot myne <rhyme label="a" type="m" corresp="#s1:l1">klacht'</rhyme>:</l>
        <l id="s1:l5" met="3" type="-+">Wt den slyck seer <rhyme label="c" type="f">onreyne</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">End' een afgront niet <rhyme label="c" type="f" corresp="#s1:l5">kleyne</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Met kracht hy my wt <rhyme label="d" type="m">toogh</rhyme>.</l>
        <l id="s1:l8" met="3" type="-+">Hy heeft myn voeten <rhyme label="e" type="m">vast</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Tot sijn wegen <rhyme label="e" type="m" corresp="#s1:l8">gepast</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">Op een steenrots seer <rhyme label="d" type="m" corresp="#s1:l7">hoogh</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="5" type="-+">In mynen mondt heeft hy een lofsangh <rhyme label="a" type="m">soet</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Gegheuen, dies wert hy <rhyme label="b" type="m">gheeert</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Daer doer t'volck oock sal sijn <rhyme label="b" type="m" corresp="#s2:l2">gheleert</rhyme>,</l>
        <l id="s2:l4" met="5" type="-+">Om den Heer te verwachten met <rhyme label="a" type="m" corresp="#s2:l1">langhmoedt</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Wel saligh sal hy <rhyme label="c" type="f">wesen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Die hoept op Godt <rhyme label="c" type="f" corresp="#s2:l5">ghepresen</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">End op hem vast blijft <rhyme label="d" type="m">staen</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Laetende hen die <rhyme label="e" type="m">stout</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Lieghen seer <rhyme label="e" type="m" corresp="#s2:l8">menighfout</rhyme>,</l>
        <l id="s2:l10" met="3" type="-+">Die haest sullen <rhyme label="d" type="m" corresp="#s2:l7">vergaen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="5" type="-+">Heer Godt uwe wercken sijn <rhyme label="a" type="m">wonderlick</rhyme>.</l>
        <l id="s3:l2" met="4" type="-+">Ghy denckt op ons Heer <rhyme label="b" type="m">goedertier</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">So dat niemant in't leuen <rhyme label="b" type="m" corresp="#s3:l2">hier</rhyme>,</l>
        <l id="s3:l4" met="5" type="-+">Vwe gaeuen kan melden <rhyme label="a" type="m" corresp="#s3:l1">sonderlick</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Soud' ick die al t'saem <rhyme label="c" type="f">louen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">T'ghetal gaet my te <rhyme label="c" type="f" corresp="#s3:l5">bouen</rhyme>.</l>
        <l id="s3:l7" met="3" type="-+">Slachtoffer nu voort <rhyme label="d" type="m">aen</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Laet ick, t'welck ghy niet <rhyme label="e" type="m">wilt</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Maer ghy hebt Heere <rhyme label="e" type="m" corresp="#s3:l8">mildt</rhyme>,</l>
        <l id="s3:l10" met="3" type="-+">D'oore my <rhyme label="d" type="m" corresp="#s3:l7">opghedaen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="5" type="-+">Schultoffer hebt ghy van my beghęrt <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Voor die sonde: Dan sprack ick <rhyme label="b" type="m">vry</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Siet hier ben ick, daer staet van <rhyme label="b" type="m" corresp="#s4:l2">my</rhyme></l>
        <l id="s4:l4" met="5" type="-+">Gheschreuen in v' Wetboeck, so elck <rhyme label="a" type="m" corresp="#s4:l1">siet</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Dat ick uwen wil <rhyme label="c" type="f">hilligh</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Volbringhen sal <rhyme label="c" type="f" corresp="#s4:l5">ghewilligh</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Sulcks doe ick oock myn <rhyme label="d" type="m">Godt</rhyme>.</l>
        <l id="s4:l8" met="3" type="-+">Al v' voornemen <rhyme label="e" type="m">goedt</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">Draegh' ick in myn <rhyme label="e" type="m" corresp="#s4:l8">gemoedt</rhyme>,</l>
        <l id="s4:l10" met="3" type="-+">End houd' oock v' <rhyme label="d" type="m" corresp="#s4:l7">ghebodt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="5" type="-+">Ick wil verkonden v' gerechtheit <rhyme label="a" type="m">klaer</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">In der Ghemeynten <rhyme label="b" type="m">ouerluydt</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Ghy weett wt wat hert' dat sulcks <rhyme label="b" type="m" corresp="#s5:l2">spruyt</rhyme>.</l>
        <l id="s5:l4" met="5" type="-+">Ick hebb' uwe daeden geroemt <rhyme label="a" type="m" corresp="#s5:l1">eenpaer</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Van v' waerheit <rhyme label="c" type="f">stantuastigh</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">End van v' hulpe <rhyme label="c" type="f" corresp="#s5:l5">krachtigh</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Spreeck' ick tot groot end <rhyme label="d" type="m">kleyn</rhyme>.</l>
        <l id="s5:l8" met="3" type="-+">Ick prijs Heer v' <rhyme label="e" type="m">goedtheit</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">End' v' <rhyme label="e" type="m" corresp="#s5:l8">ghetrouwicheit</rhyme>,</l>
        <l id="s5:l10" met="3" type="-+">Midden in v' <rhyme label="d" type="m" corresp="#s5:l7">ghemeyn</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="5" type="-+">Vwe goedheit sult ghy Heer <rhyme label="a" type="m">nemmermeer</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Van my węeren tot gheener <rhyme label="b" type="m">tijdt</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Maer my bystaen in desen <rhyme label="b" type="m" corresp="#s6:l2">strijdt</rhyme>,</l>
        <l id="s6:l4" met="5" type="-+">End' altydt bewaeren tot uwer <rhyme label="a" type="m" corresp="#s6:l1">eer</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">T'cruys wilt my <rhyme label="c" type="f">oueruallen</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Ende myn sonden <rhyme label="c" type="f" corresp="#s6:l5">alle</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">T'ghesichte my <rhyme label="d" type="m">ontwijckt</rhyme>.</l>
        <l id="s6:l8" met="3" type="-+">Ick heb' meer lydens <rhyme label="e" type="m">styf</rhyme>,</l>
        <l id="s6:l9" met="3" type="-+">Dan haeren aen myn <rhyme label="e" type="m" corresp="#s6:l8">lyf</rhyme>,</l>
        <l id="s6:l10" met="3" type="-+">T'herte my gantsch <rhyme label="d" type="m" corresp="#s6:l7">beswyckt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="5" type="-+">O Godt verlost my nu <rhyme label="a" type="m">ghenaedelick</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Komt my ter hulp' O Heer seer <rhyme label="b" type="m">haest</rhyme>:</l>
        <l id="s7:l3" met="4" type="-+">Laett doch beschaemt sijn end <rhyme label="b" type="m" corresp="#s7:l2">verbaest</rhyme>,</l>
        <l id="s7:l4" met="5" type="-+">Al die myn doodt soecken <rhyme label="a" type="m" corresp="#s7:l1">ghestaedelick</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">Dat se schande <rhyme label="c" type="f">beęruen</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Die my willen <rhyme label="c" type="f" corresp="#s7:l5">verdęruen</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">End my bespotten <rhyme label="d" type="m">koen</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Hen toekome met <rhyme label="e" type="m">kracht</rhyme>,</l>
        <l id="s7:l9" met="3" type="-+">Dat se hadden <rhyme label="e" type="m" corresp="#s7:l8">bedacht</rhyme>,</l>
        <l id="s7:l10" met="3" type="-+">My listlick aen te <rhyme label="d" type="m" corresp="#s7:l7">doen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="5" type="-+">Maer in v sijn se verhueght end <rhyme label="a" type="m">verblijdt</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Die met noodt sijnde seer <rhyme label="b" type="m">benauwt</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Op v alleyn hebben <rhyme label="b" type="m" corresp="#s8:l2">betrauwt</rhyme>.</l>
        <l id="s8:l4" met="5" type="-+">Dat se segghen: Godt sij <rhyme label="a" type="m" corresp="#s8:l1">gebenedijdt</rhyme>:</l>
        <l id="s8:l5" met="3" type="-+">Aerm ben ick end <rhyme label="c" type="f">elendigh</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Maer myn Godt seer <rhyme label="c" type="f" corresp="#s8:l5">bystendigh</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Sorght voor my nu voort <rhyme label="d" type="m">aen</rhyme>.</l>
        <l id="s8:l8" met="3" type="-+">Ghy helpt my doer v' <rhyme label="e" type="m">kracht</rhyme>,</l>
        <l id="s8:l9" met="3" type="-+">Ghy hebt oock op my <rhyme label="e" type="m" corresp="#s8:l8">acht</rhyme>,</l>
        <l id="s8:l10" met="3" type="-+">Wilt my altydt <rhyme label="d" type="m" corresp="#s8:l7">bystaen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <author>Guilielmus Bolognino</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">JOnckheyt, comt aendachtich <rhyme label="a" type="f">letten</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Op Amandum, noch een <rhyme label="b" type="m">kindt</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Die u tot 'nen spieghel <rhyme label="b" type="m" corresp="#s1:l2">dient</rhyme>:</l>
        <l id="s1:l4" met="4" type="+-">Hem den Vader wou <rhyme label="a" type="f" corresp="#s1:l1">beletten</rhyme></l>
        <l id="s1:l5" met="4" type="+-">'t Clooster-leven, maer om <rhyme label="c" type="m">niet</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Want hy oock sijn' erf-deel <rhyme label="c" type="m" corresp="#s1:l5">liet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Hy is te Roomen gaen <rhyme label="a" type="f">eeren</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Petrum, die verthoont hem <rhyme label="b" type="m">sey</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Dat hy sou sonder <rhyme label="b" type="m" corresp="#s2:l2">ghebey</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Nae Vranckrijck wederom <rhyme label="a" type="f" corresp="#s2:l1">keeren</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Daer hy vierich heeft <rhyme label="c" type="m">ghepreeckt</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Ieder tot de deught <rhyme label="c" type="m" corresp="#s2:l5">verweckt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Doen hy den Conincks soon <rhyme label="a" type="f">waste</rhyme></l>
        <l id="s3:l2" met="4" type="+-">In den Doop', heeft het kleyn <rhyme label="b" type="m">kindt</rhyme></l>
        <l id="s3:l3" met="4" type="+-">In 't antwoorden hem <rhyme label="b" type="m" corresp="#s3:l2">ghedient</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Doen m' op den Amen niet <rhyme label="a" type="f" corresp="#s3:l1">paste</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Godt de open 't kindtjens <rhyme label="c" type="m">mont</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Die daer naer toe werom <rhyme label="c" type="m" corresp="#s3:l5">stont</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Van Dagebertus <rhyme label="a" type="f">ghesonden</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Heeft hy uyt het <rhyme label="b" type="m">Nederlandt</rhyme></l>
        <l id="s4:l3" met="4" type="+-">D' eerst d' afgodery <rhyme label="b" type="m" corresp="#s4:l2">verbant</rhyme>.</l>
        <l id="s4:l4" met="4" type="+-">Waerom wy oock zijn <rhyme label="a" type="f" corresp="#s4:l1">verbonden</rhyme></l>
        <l id="s4:l5" met="4" type="+-">Hem te dancken, naest den <rhyme label="c" type="m">Heer</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Aen te doen hem alle <rhyme label="c" type="m" corresp="#s4:l5">eer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Tot den Bischops stoel <rhyme label="a" type="f">verheven</rhyme></l>
        <l id="s5:l2" met="4" type="+-">In Maestricht, hiel hy seer <rhyme label="b" type="m">aen</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Om een van de coord' <rhyme label="b" type="m" corresp="#s5:l2">tonslaen</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Maer om niet, doch hem Godt <rhyme label="a" type="f" corresp="#s5:l1">'tleven</rhyme></l>
        <l id="s5:l5" met="4" type="+-">Weergaf om Amants <rhyme label="c" type="m">ghebedt</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Dat ghenomen had den <rhyme label="c" type="m" corresp="#s5:l5">wet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Doen hy quam van hier te <rhyme label="a" type="f">scheyden</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Quamen hem al te <rhyme label="b" type="m">ghemoet</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Die hy had ghestiert tot 't <rhyme label="b" type="m" corresp="#s6:l2">goedt</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Om nae 't rijck hem te <rhyme label="a" type="f" corresp="#s6:l1">gheleyden</rhyme>:</l>
        <l id="s6:l5" met="4" type="+-">Met die zielen die <rhyme label="c" type="m">ghecroont</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Is aen Aldegund' <rhyme label="c" type="m" corresp="#s6:l5">verthoont</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">O Amande, wilt <rhyme label="a" type="f">behouwen</rhyme></l>
        <l id="s7:l2" met="4" type="+-">'t Recht gheloof in 't <rhyme label="b" type="m">Nederlandt</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Daer 't van u eerst is <rhyme label="b" type="m" corresp="#s7:l2">gheplant</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">U ghebedt wy 't <rhyme label="a" type="f" corresp="#s7:l1">toebetrouwen</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Weert van ons de <rhyme label="c" type="m">kettery</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Maect van alle boosheydt <rhyme label="c" type="m" corresp="#s7:l5">vry</rhyme>.</l>
      </lg>
    </lg>
  </text>

      <year-start>1661</year-start>
      <year-end>1661</year-end>
    </date>
    <location>
      <orginal-name>hoorn</orginal-name>
      <standard-name>Hoorn, The Netherlands</standard-name>
      <coordinates>
        <lon>52.653272</lon>
        <lat>5.0735802</lat>
      </coordinates>
    </location>
    <tags/>
    <melody>C'est trop courir les eaux</melody>
  <author>Cornelis Maertsz.</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">DOe Godes milde <rhyme label="a" type="m">handt</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Dus kroond ons <rhyme label="a" type="m" corresp="#s1:l1">Vaderlandt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Verlieten zy den <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En terghden hem tot <rhyme label="c" type="m">wraeck</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">En kozen niet sijn <rhyme label="b" type="m" corresp="#s1:l3">eer</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Maer Bacchus tot <rhyme label="c" type="m" corresp="#s1:l4">vermaeck</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Zy seyden noyt te <rhyme label="a" type="m">saem</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Komt danckbre Godes <rhyme label="a" type="m" corresp="#s2:l1">naem</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Die ons met goedt <rhyme label="b" type="m">omset</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En heyl stroomt over 't <rhyme label="c" type="m">Landt</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Maer yder roockt sijn <rhyme label="b" type="m" corresp="#s2:l3">Pet</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">En kust sijn eyghen <rhyme label="c" type="m" corresp="#s2:l4">handt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">En 't wijl een yder <rhyme label="a" type="m">denckt</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Dat Godt hem 't goedt niet <rhyme label="a" type="m" corresp="#s3:l1">schenckt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Maer d'eyghen <rhyme label="b" type="m">neerstigheydt</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Hem dat heeft <rhyme label="c" type="m">toegeschickt</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Werdt het na lust <rhyme label="b" type="m" corresp="#s3:l3">beleydt</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En Godts eer <rhyme label="c" type="m" corresp="#s3:l4">mis-gemickt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Hier door soo wordt het <rhyme label="a" type="m">Landt</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Vervult tot aen de <rhyme label="a" type="m" corresp="#s4:l1">kant</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Met krijtend <rhyme label="b" type="m">wraeck-geschal</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Want na de Rijckdom <rhyme label="c" type="m">wast</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Wordt het oock over <rhyme label="b" type="m" corresp="#s4:l3">al</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Met sonden <rhyme label="c" type="m" corresp="#s4:l4">overlast</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">En of de Rijckdom <rhyme label="a" type="m">staegh</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Vermeerdert alle <rhyme label="a" type="m" corresp="#s5:l1">daegh</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">De sonde reyckt de <rhyme label="b" type="m">top</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">'t Hoovaerdighe <rhyme label="c" type="m">gemoedt</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Dat steeckt de kruyn noch <rhyme label="b" type="m" corresp="#s5:l3">op</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Verr' boven al het <rhyme label="c" type="m" corresp="#s5:l4">goedt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">De grooten treden <rhyme label="a" type="m">voor</rhyme></l>
        <l id="s6:l2" met="3" type="-+">De kleynen gaen in 't <rhyme label="a" type="m" corresp="#s6:l1">spoor</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Haer wegen sijn <rhyme label="b" type="m">vervloeckt</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Het eynde leydt in d' <rhyme label="c" type="m">Hel</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">En die den Hemel <rhyme label="b" type="m" corresp="#s6:l3">soeckt</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Vindt nauw een <rhyme label="c" type="m" corresp="#s6:l4">Metgesel</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Het gansche Landt dat <rhyme label="a" type="m">blinckt</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">O neen ! het Landt dat <rhyme label="a" type="m" corresp="#s7:l1">stinckt</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Van vuyle <rhyme label="b" type="m">Hoovaerdy</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Van pracht en prael, en <rhyme label="c" type="m">trots</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Gy set sijn vlecken <rhyme label="b" type="m" corresp="#s7:l3">by</rhyme></l>
        <l id="s7:l6" met="3" type="-+">De beste kind'ren <rhyme label="c" type="m" corresp="#s7:l4">Godts</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Die nu met sijn <rhyme label="a" type="m">verstant</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Door-loopt ons <rhyme label="a" type="m" corresp="#s8:l1">Vaderlandt</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">'t Is of men daer gheen <rhyme label="b" type="m">tucht</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Noch vreese Godes <rhyme label="c" type="m">siet</rhyme></l>
        <l id="s8:l5" met="3" type="-+">De deught schijnt wegh <rhyme label="b" type="m" corresp="#s8:l3">ghevlucht</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">De liefde vindt-men <rhyme label="c" type="m" corresp="#s8:l4">niet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">De vuyle <rhyme label="a" type="m">achterklap</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">'t Geraes van <rhyme label="a" type="m" corresp="#s9:l1">dronckenschap</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">En <rhyme label="b" type="m">geyle-vreughde-stof</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Die stroomen uyt de <rhyme label="c" type="m">mondt</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Als of men in het <rhyme label="b" type="m" corresp="#s9:l3">Hof</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Van 't Gheest'lijck Babel <rhyme label="c" type="m" corresp="#s9:l4">stont</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">En t'wijl het dus <rhyme label="a" type="m">toe-gaet</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Soo klinckt op onse <rhyme label="a" type="m" corresp="#s10:l1">straet</rhyme></l>
        <l id="s10:l3" met="3" type="-+">De Stemme van Godts <rhyme label="b" type="m">Woordt</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Ghepredickt in de <rhyme label="c" type="m">Kerck</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">En roept: verstockt volck! <rhyme label="b" type="m" corresp="#s10:l3">hoort</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Verlaet uw' sondigh <rhyme label="c" type="m" corresp="#s10:l4">werck</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Dit is te <rhyme label="a" type="m">onbeleeft</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Dat Godt sijn zeghen <rhyme label="a" type="m" corresp="#s11:l1">geeft</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">En hy uw' Landt met <rhyme label="b" type="m">goedt</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">En ghy met quaedt <rhyme label="c" type="m">vervult</rhyme>:</l>
        <l id="s11:l5" met="3" type="-+">Sijn toorn brandt als een <rhyme label="b" type="m" corresp="#s11:l3">gloet</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Ontsteecken door uw' <rhyme label="c" type="m" corresp="#s11:l4">schuldt</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Dus bromt het heyligh <rhyme label="a" type="m">woordt</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">En menigh die dit <rhyme label="a" type="m" corresp="#s12:l1">hoort</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Betoont dat in 't <rhyme label="b" type="m">ghemeyn</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">De vrucht daer van <rhyme label="c" type="m">verdwijnt</rhyme>:</l>
        <l id="s12:l5" met="3" type="-+">Want, 't hoopken is nu <rhyme label="b" type="m" corresp="#s12:l3">kleyn</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Dat hier als lichten <rhyme label="c" type="m" corresp="#s12:l4">schijnt</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Ja self des <rhyme label="a" type="m">Heeren-Dagh</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Moet dienen tot <rhyme label="a" type="m" corresp="#s13:l1">gelagh</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">En sonden <rhyme label="b" type="m">ongetoomt</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Ja 't schijnt nu voor <rhyme label="c" type="m">gewis</rhyme></l>
        <l id="s13:l5" met="3" type="-+">Dat Satan hem <rhyme label="b" type="m" corresp="#s13:l3">toekoomt</rhyme>,</l>
        <l id="s13:l6" met="3" type="-+">En 't Godes dagh niet <rhyme label="c" type="m" corresp="#s13:l4">is</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Een gruwelijcke <rhyme label="a" type="m">schand</rhyme></l>
        <l id="s14:l2" met="3" type="-+">Is 't voor u, dartel <rhyme label="a" type="m" corresp="#s14:l1">Land</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Dat ghy dus <rhyme label="b" type="m">menighfout</rhyme></l>
        <l id="s14:l4" met="3" type="-+">Met zegen <rhyme label="c" type="m">overstort</rhyme>,</l>
        <l id="s14:l5" met="3" type="-+">Vloeyt over in het <rhyme label="b" type="m" corresp="#s14:l3">Goudt</rhyme>,</l>
        <l id="s14:l6" met="3" type="-+">En komt in danck te <rhyme label="c" type="m" corresp="#s14:l4">kort</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

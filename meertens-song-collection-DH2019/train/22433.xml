  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Godt ick moet u <rhyme label="a" type="f">claghen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Met eenen droeuen <rhyme label="b" type="m">moet</rhyme>:</l>
        <l id="s1:l3" met="3" type="-+">Mijner vyanden die my <rhyme label="a" type="f" corresp="#s1:l1">plaghen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Is die meeste mijn vleesch en <rhyme label="b" type="m" corresp="#s1:l2">bloet</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Heere ick suchte <rhyme label="c" type="f">seere</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">In daghelijckschen <rhyme label="d" type="m">strijt</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Desen vyant ben ick te <rhyme label="c" type="f" corresp="#s1:l5">teere</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Want hy verwint <rhyme label="d" type="m" corresp="#s1:l6">altijt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Int schelden en int <rhyme label="a" type="f">vloecken</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Daer is tvleesch in <rhyme label="b" type="m">gherust</rhyme>:</l>
        <l id="s2:l3" met="3" type="-+">Ten wil gheen duechden <rhyme label="a" type="f" corresp="#s2:l1">soecken</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Maer volghen synen <rhyme label="b" type="m" corresp="#s2:l2">lust</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">Twil altijt <rhyme label="c" type="f">wederstreuen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Teghen u Heere mijn <rhyme label="d" type="m">Godt</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Ten wil hem niet <rhyme label="c" type="f" corresp="#s2:l5">begheuen</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Onder des wets <rhyme label="d" type="m" corresp="#s2:l6">ghebodt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Dat claeg ick van gantscher <rhyme label="a" type="f">herten</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Dijn Goddelijcke <rhyme label="b" type="m">Mayesteyt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Int cruyce van lijden en <rhyme label="a" type="f" corresp="#s3:l1">smerten</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Wil tvleesch niet volghen <rhyme label="b" type="m" corresp="#s3:l2">bereyt</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Ick en cant niet <rhyme label="c" type="f">bedwinghen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Sonder u ghenadich <rhyme label="d" type="m">ghedult</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Het can my daghelijcx <rhyme label="c" type="f" corresp="#s3:l5">brenghen</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">In groote sonde en <rhyme label="d" type="m" corresp="#s3:l6">schult</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ghebonden en <rhyme label="a" type="f">gheuanghen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Is my den sin en <rhyme label="b" type="m">moet</rhyme>:</l>
        <l id="s4:l3" met="3" type="-+">Ick hebbe so groot <rhyme label="a" type="f" corresp="#s4:l1">verlanghen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Nae dijne hulpe <rhyme label="b" type="m" corresp="#s4:l2">goet</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Die ghy hier schenckt ons <rhyme label="c" type="f">allen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Die u bekennen <rhyme label="d" type="m">bloot</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Waer door wy niet en <rhyme label="c" type="f" corresp="#s4:l5">vallen</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Diep in des duyuels <rhyme label="d" type="m" corresp="#s4:l6">schoot</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Een dinck is noch <rhyme label="a" type="f">verbleuen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Dat my hier <rhyme label="b" type="m">wedersteeckt</rhyme>:</l>
        <l id="s5:l3" met="3" type="-+">Tghelooue en is niet recht <rhyme label="a" type="f" corresp="#s5:l1">beseuen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Daer rechte liefde <rhyme label="b" type="m" corresp="#s5:l2">ghebreeckt</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Wilt ons die liefde <rhyme label="c" type="f">schencken</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Als eenen schat seer <rhyme label="d" type="m">weert</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Dat wy daer door <rhyme label="c" type="f" corresp="#s5:l5">bedencken</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Wat de Wet van ons <rhyme label="d" type="m" corresp="#s5:l6">begheert</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">O Heere Godt en <rhyme label="a" type="f">Vader</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">In dijnen hoochsten <rhyme label="b" type="m">throon</rhyme>:</l>
        <l id="s6:l3" met="3" type="-+">Sijt onser gheen <rhyme label="a" type="f" corresp="#s6:l1">versmader</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Aenhoort ons claghe <rhyme label="b" type="m" corresp="#s6:l2">ydoon</rhyme>:</l>
        <l id="s6:l5" met="3" type="-+">Wilt toch van ons niet <rhyme label="c" type="f">wijcken</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Want ghy zijt ons <rhyme label="d" type="m">confoort</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Op dat wy hier niet af en <rhyme label="c" type="f" corresp="#s6:l5">strijcken</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Van u Goddelijck <rhyme label="d" type="m" corresp="#s6:l6">woort</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">O Vader vol <rhyme label="a" type="f">ghenaden</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Ghy doet wat ghy <rhyme label="b" type="m">toesecht</rhyme>:</l>
        <l id="s7:l3" met="3" type="-+">Gheeft ons die hier can <rhyme label="a" type="f" corresp="#s7:l1">raden</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Den heylighen Gheest <rhyme label="b" type="m" corresp="#s7:l2">oprecht</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">Dat wy niet anders <rhyme label="c" type="f">handelen</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Dan vrede en <rhyme label="d" type="m">gherechticheyt</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">En dat wy moeghen <rhyme label="c" type="f" corresp="#s7:l5">wandelen</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">In aller <rhyme label="d" type="m" corresp="#s7:l6">slechticheyt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">O Godt wilt ons <rhyme label="a" type="f">toekeeren</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Dijn goetheyt <rhyme label="b" type="m">excellent</rhyme>:</l>
        <l id="s8:l3" met="3" type="-+">Wilt ons ghelooue <rhyme label="a" type="f" corresp="#s8:l1">vermeeren</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Helpt onse cranckheyt <rhyme label="b" type="m" corresp="#s8:l2">verblent</rhyme>.</l>
        <l id="s8:l5" met="3" type="-+">Wilt onse herten <rhyme label="c" type="f">roeren</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Met u Fonteyne <rhyme label="d" type="m">claer</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Wilt ons ghenadelijck <rhyme label="c" type="f" corresp="#s8:l5">voeren</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Wt dese duysterheyt <rhyme label="d" type="m" corresp="#s8:l6">swaer</rhyme>,</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Dijn hulpe doet op ons <rhyme label="a" type="f">daken</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">En oock u <rhyme label="b" type="m">vriendelijckheyt</rhyme>:</l>
        <l id="s9:l3" met="3" type="-+">Dat wy u niet <rhyme label="a" type="f" corresp="#s9:l1">missaken</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Door eenighe <rhyme label="b" type="m" corresp="#s9:l2">droefheyt</rhyme>.</l>
        <l id="s9:l5" met="3" type="-+">Als wy ligghen in <rhyme label="c" type="f">Boeyen</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Dijn ghenade niet van ons <rhyme label="d" type="m">weynt</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Laet on ghestadich <rhyme label="c" type="f" corresp="#s9:l5">bloeyen</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Tot inden laetsten <rhyme label="d" type="m" corresp="#s9:l6">eynt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

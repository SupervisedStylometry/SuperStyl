      <category translation="religion">godsdienst</category>
    </categories>
  <author>Livinus van der Minnen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">HOort Getrouw de al <rhyme label="a" type="m">gelyck</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Hoort hoe dat hy is te <rhyme label="b" type="f">prysen</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Uwen Bant van 't <rhyme label="a" type="m" corresp="#s1:l1">Houwelyck</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Die van Godt soo menigh <rhyme label="b" type="f" corresp="#s1:l2">reysen</rhyme></l>
        <l id="s1:l5" met="4" type="+-">Is ver-eert van Godt <rhyme label="c" type="m">geschickt</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">En in 't Paradys <rhyme label="c" type="m" corresp="#s1:l5">ghestrickt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">In 't beginsel bont hem <rhyme label="a" type="m">Godt</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Eer dat onsen eersten <rhyme label="b" type="f">Vader</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Over treden syn <rhyme label="a" type="m" corresp="#s2:l1">ghebodt</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Tot bewys aen al <rhyme label="b" type="f" corresp="#s2:l2">te-gader</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Dat het is een <rhyme label="c" type="m">Paradys</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Als Ghetrouwde zyn in <rhyme label="c" type="m" corresp="#s2:l5">peys</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Jae Godt selver als hy <rhyme label="a" type="m">wouw</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Mensch gaen worden voor ons <rhyme label="b" type="f">sonden</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Heeft verkoren eene <rhyme label="a" type="m" corresp="#s3:l1">Vrouw</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Die met Joseph was <rhyme label="b" type="f" corresp="#s3:l2">verbonden</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Om te thoonen dat syn <rhyme label="c" type="m">handt</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Had gemaeckt den echtẽ <rhyme label="c" type="m" corresp="#s3:l5">Bant</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Peyft hoe eêl de trouw moet <rhyme label="a" type="m">zyn</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Daer Godt self die komt <rhyme label="b" type="f">vereeren</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Makende van Water <rhyme label="a" type="m" corresp="#s4:l1">Wyn</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Om te thoonen en te <rhyme label="b" type="f" corresp="#s4:l2">leeren</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Dat het Water daer wort <rhyme label="c" type="m">Wyn</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Als twee herten eenigh <rhyme label="c" type="m" corresp="#s4:l5">zyn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">'t Houwelyck heeft Godt den <rhyme label="a" type="m">Heer</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Tot een Sacrament <rhyme label="b" type="f">verheven</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Dus verblydt u hier in <rhyme label="a" type="m" corresp="#s5:l1">seer</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Want Godts gratie wort <rhyme label="b" type="f" corresp="#s5:l2">gegeven</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Aen den mensch die soo 't <rhyme label="c" type="m">betaemt</rhyme></l>
        <l id="s5:l6" met="4" type="+-">In het Houwelyck <rhyme label="c" type="m" corresp="#s5:l5">versaemt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Hier uyt leert dan Man en <rhyme label="a" type="m">Vrouw</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Hoe dat komt van Godt het <rhyme label="b" type="f">paren</rhyme></l>
        <l id="s6:l3" met="4" type="+-">En den bant van d'echte <rhyme label="a" type="m" corresp="#s6:l1">trouw</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Dus wilt tot Godts eer <rhyme label="b" type="f" corresp="#s6:l2">vergaren</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Want Godt is daer midden <rhyme label="c" type="m">in</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Daer twee dragen suyver <rhyme label="c" type="m" corresp="#s6:l5">min</rhyme>.</l>
      </lg>
    </lg>
  </text>

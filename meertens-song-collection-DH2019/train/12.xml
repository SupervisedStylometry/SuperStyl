  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">WAer toefje waerde <rhyme label="a" type="m">Clorimont</rhyme>.</l>
        <l id="s1:l2" met="3" type="-+">En laet u Bruyt <rhyme label="b" type="f">verlangen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Verlangen na die soete <rhyme label="a" type="m" corresp="#s1:l1">stont</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Dat ghy my sult <rhyme label="b" type="f" corresp="#s1:l2">ontfangen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ontfangen tot u Bruyt en <rhyme label="a" type="m">vrouw</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Met suijckersoete <rhyme label="b" type="f">kusjes</rhyme></l>
        <l id="s2:l3" met="4" type="-+">En knoopen so de Echte <rhyme label="a" type="m" corresp="#s2:l1">trouw</rhyme></l>
        <l id="s2:l4" met="3" type="-+">In op gehoopte <rhyme label="b" type="f" corresp="#s2:l2">Lusjes</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ach Hemel! sal die soete <rhyme label="a" type="m">stont</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Eer Langh niet sijn voor <rhyme label="b" type="f">handen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Wanneer wy sullen mont aen <rhyme label="a" type="m" corresp="#s3:l1">mont</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Ons zieltjes 't saem <rhyme label="b" type="f" corresp="#s3:l2">verpanden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Dra Echo, op, met alle <rhyme label="a" type="m">vlijt</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Gaet bootschapt mijn <rhyme label="b" type="f">beminde</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Dat hy my hier, als 't is <rhyme label="a" type="m" corresp="#s4:l1">geseyt</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">In 't Elsenbos sal <rhyme label="b" type="f" corresp="#s4:l2">vinde</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Al waer ick Myrth en <rhyme label="a" type="m">Lauwerier</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Met Bloempjes soet <rhyme label="b" type="f">doormengel</rhyme></l>
        <l id="s5:l3" met="4" type="-+">En tot sijn eer en mijn <rhyme label="a" type="m" corresp="#s5:l1">plasier</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Een Bruygoms <rhyme label="b" type="f" corresp="#s5:l2">Kransje-strengel</rhyme>.</l>
      </lg>
    </lg>
  </text>

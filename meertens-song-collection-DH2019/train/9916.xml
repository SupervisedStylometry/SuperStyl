  <author>Karel van Mander</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">EEn Liedt t'onsen <rhyme label="a" type="f">vermane</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Wild' ick wel singhen, <rhyme label="b" type="m">want</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Wy vinden op de <rhyme label="a" type="f" corresp="#s1:l1">bane</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Nae t' nieu beloefde <rhyme label="b" type="m" corresp="#s1:l2">landt</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Menich vyandt te <rhyme label="c" type="f">beene</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Dus laet ons toesien <rhyme label="d" type="m">wel</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Dat niemant in't <rhyme label="c" type="f" corresp="#s1:l5">ghemeene</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Inwendich en <rhyme label="c" type="f" corresp="#s1:l5">versteene</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Door't bedroch der zonden <rhyme label="d" type="m" corresp="#s1:l6">fel</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Het fel bedroch der <rhyme label="a" type="f">zonden</rhyme></l>
        <l id="s2:l2" met="3" type="-+">En mach ons doen gheen <rhyme label="b" type="m">quaet</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Indien wy t'allen <rhyme label="a" type="f" corresp="#s2:l1">stonden</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Godts woordt, dat eeuwich <rhyme label="b" type="m" corresp="#s2:l2">zaet</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Houden in't herte <rhyme label="c" type="f">binnen</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Ghesloten end' <rhyme label="d" type="m">gheprent</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Gheschreven in de <rhyme label="c" type="f" corresp="#s2:l5">sinnen</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Wy sullen wel <rhyme label="c" type="f" corresp="#s2:l5">verwinnen</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Weerelt, vleesch, end' oudt <rhyme label="d" type="m" corresp="#s2:l6">Serpent</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">T'serpent dat heeft <rhyme label="a" type="f">bedroghen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Eva in't lust-hof <rhyme label="b" type="m">soet</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Ende Gods woordt <rhyme label="a" type="f" corresp="#s3:l1">ghetoghen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Eerst uyt haer sinnen <rhyme label="b" type="m" corresp="#s3:l2">vroet</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">t'Onnoosel bloet <rhyme label="c" type="f">vergoten</rhyme></l>
        <l id="s3:l6" met="3" type="-+">En badde Cain <rhyme label="d" type="m">niet</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Hadde hy <rhyme label="c" type="f" corresp="#s3:l5">onverdroten</rhyme></l>
        <l id="s3:l8" met="3" type="-+">In sijn herte <rhyme label="c" type="f" corresp="#s3:l5">ghesloten</rhyme></l>
        <l id="s3:l9" met="3" type="-+">s'Heeren woordt dat hy <rhyme label="d" type="m" corresp="#s3:l6">verliet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Verlaten t'woordt des <rhyme label="a" type="f">Heeren</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Heeft oock d'huysvrouwe <rhyme label="b" type="m">Loths</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Sy ginck haer omme <rhyme label="a" type="f" corresp="#s4:l1">keeren</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Teghen t'woort des <rhyme label="b" type="m" corresp="#s4:l2">ghebodts</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">Den Man Gods werdt <rhyme label="c" type="f">verbeten</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Om dat hy heeft <rhyme label="d" type="m">ghehoort</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Die woorden der <rhyme label="c" type="f" corresp="#s4:l5">Propheten</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Dranck water, end' heeft <rhyme label="c" type="f" corresp="#s4:l5">gheten</rhyme></l>
        <l id="s4:l9" met="3" type="-+">Broodt, jeghen des Heeren <rhyme label="d" type="m" corresp="#s4:l6">woordt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Des Heeren woort cleyn <rhyme label="a" type="f">achten</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Dat dede Nadab <rhyme label="b" type="m">schier</rhyme></l>
        <l id="s5:l3" met="3" type="-+">End' Abihu <rhyme label="a" type="f" corresp="#s5:l1">versmachten</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Ende vergaen in't <rhyme label="b" type="m" corresp="#s5:l2">vyer</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Menighertier <rhyme label="c" type="f">figuere</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Van Saul, end' ander <rhyme label="d" type="m">meer</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Vertoont ons die Wet <rhyme label="c" type="f" corresp="#s5:l5">puere</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Die heylighe <rhyme label="c" type="f" corresp="#s5:l5">Schriftuere</rhyme></l>
        <l id="s5:l9" met="3" type="-+">Is gheheel tot onser <rhyme label="d" type="m" corresp="#s5:l6">leer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Tot onser leer <rhyme label="a" type="f">bequame</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Op dat een Mensche <rhyme label="b" type="m">fijn</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Draghende s'Heeren <rhyme label="a" type="f" corresp="#s6:l1">Name</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Soude volcomen <rhyme label="b" type="m" corresp="#s6:l2">zijn</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Tot alle goede <rhyme label="c" type="f">wercken</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Gheschickt, en daer toe <rhyme label="d" type="m">snel</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Want soo wy <rhyme label="c" type="f" corresp="#s6:l5">aenmercken</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">In den gheest vry <rhyme label="c" type="f" corresp="#s6:l5">verstercken</rhyme>,</l>
        <l id="s6:l9" met="3" type="-+">Als wy doen nae Gods <rhyme label="d" type="m" corresp="#s6:l6">bevel</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Die Gods bevel <rhyme label="a" type="f">beleven</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Sal Godt gheleyden <rhyme label="b" type="m">vry</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Voedtsel der Zielen <rhyme label="a" type="f" corresp="#s7:l1">gheven</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Haer ghebeente sal <rhyme label="b" type="m" corresp="#s7:l2">hy</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Sterck maken, end' <rhyme label="c" type="f">verjeuchden</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Als eenen ghewaterden <rhyme label="d" type="m">hof</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Sullen alle die in <rhyme label="c" type="f" corresp="#s7:l5">deuchden</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Gods wille doen met <rhyme label="c" type="f" corresp="#s7:l5">vreuchden</rhyme>,</l>
        <l id="s7:l9" met="3" type="-+">Tot sijnen prijs ende <rhyme label="d" type="m" corresp="#s7:l6">lof</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Gods prijs end' lof <rhyme label="a" type="f">verbreyden</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Laet ons met wercken <rhyme label="b" type="m">goet</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Van Christus woorden niet <rhyme label="a" type="f" corresp="#s8:l1">scheyden</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Want wie die hoort end' <rhyme label="b" type="m" corresp="#s8:l2">doet</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Die is ghelijck den <rhyme label="c" type="f">wijsen</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Die thuys op den steen <rhyme label="d" type="m">bout</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Hoe wel de winden <rhyme label="c" type="f" corresp="#s8:l5">rijsen</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Hy en derf met <rhyme label="c" type="f" corresp="#s8:l5">afgrijsen</rhyme>,</l>
        <l id="s8:l9" met="3" type="-+">Sijn macht is in't levens <rhyme label="d" type="m" corresp="#s8:l6">hout</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Christus het hout des <rhyme label="a" type="f">levens</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Hier sijn woninghe <rhyme label="b" type="m">maeckt</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Met den Vader, <rhyme label="a" type="f" corresp="#s9:l1">benevens</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Die in sijn liefde <rhyme label="b" type="m" corresp="#s9:l2">blaeckt</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">End' leeft nae sijnen <rhyme label="c" type="f">woorde</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Ghetrouwe tot der <rhyme label="d" type="m">doot</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Of haer de weerelt <rhyme label="c" type="f" corresp="#s9:l5">stoorde</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Een drievoudighe <rhyme label="c" type="f" corresp="#s9:l5">coorde</rhyme></l>
        <l id="s9:l9" met="3" type="-+">Is gheduerich in alle <rhyme label="d" type="m" corresp="#s9:l6">noot</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">In alle noot niet <rhyme label="a" type="f">smeecken</rhyme></l>
        <l id="s10:l2" met="3" type="-+">In den gheest <rhyme label="b" type="m">goedertier</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Tot dat <rhyme label="a" type="f" corresp="#s10:l1">ghenaden-teecken</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Laet ons, ons keeren, <rhyme label="b" type="m" corresp="#s10:l2">hier</rhyme></l>
        <l id="s10:l5" met="3" type="-+">Vast by den Heere <rhyme label="c" type="f">blijven</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">In sijn liefd' end' <rhyme label="d" type="m">ghebodt</rhyme></l>
        <l id="s10:l7" met="3" type="-+">Tot onses roeps <rhyme label="c" type="f" corresp="#s10:l5">verstijven</rhyme>,</l>
        <l id="s10:l8" met="3" type="-+">Sijnen gheest sal ons <rhyme label="c" type="f" corresp="#s10:l5">drijven</rhyme>,</l>
        <l id="s10:l9" met="3" type="-+">Amen, vrienden, dat gheve <rhyme label="d" type="m" corresp="#s10:l6">Godt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Godt gheve sijn <rhyme label="a" type="f">ghenade</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Tot ons vermoghen <rhyme label="b" type="m">kranck</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Dat wy dit cort end' <rhyme label="a" type="f" corresp="#s11:l1">quade</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Schaduwich leven <rhyme label="b" type="m" corresp="#s11:l2">lanck</rhyme></l>
        <l id="s11:l5" met="3" type="-+">Sijn woordt oprecht <rhyme label="c" type="f">bewaren</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Ende naemaels <rhyme label="d" type="m">ghewis</rhyme></l>
        <l id="s11:l7" met="3" type="-+">Met alle sijn <rhyme label="c" type="f" corresp="#s11:l5">Heyrscharen</rhyme></l>
        <l id="s11:l8" met="3" type="-+">By hem moghen <rhyme label="c" type="f" corresp="#s11:l5">vergaren</rhyme>,</l>
        <l id="s11:l9" met="3" type="-+">Ghelijck ons wel noodich <rhyme label="d" type="m" corresp="#s11:l6">is</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <author>Dirk Rafaelsz. Camphuysen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HEt zy ick stil en uytte <rhyme label="a" type="m">weegh</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Met saken van geheym <rhyme label="a" type="m" corresp="#s1:l1">onleegh</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Ben in vergadering der <rhyme label="b" type="f">vromen</rhyme>;</l>
        <l id="s1:l4" met="4" type="-+">Het zy by ’tvolck in’t <rhyme label="c" type="m">openbaer</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">Des Heeren loff sal vol en <rhyme label="c" type="m" corresp="#s1:l4">klaer</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Uyt mijn danck-vaerdigh herte <rhyme label="b" type="f" corresp="#s1:l3">stroomen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Groot zijn, en boven aertsch <rhyme label="a" type="m">verstandt</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">De wercken van sijn <rhyme label="a" type="m" corresp="#s2:l1">rechter-handt</rhyme></l>
        <l id="s2:l3" met="4" type="-+">De wercken van de handt des <rhyme label="b" type="f">Heeren</rhyme>;</l>
        <l id="s2:l4" met="4" type="-+">Die alle hert na Godt <rhyme label="c" type="m">gesint</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Door drift van liefde soeckt, en <rhyme label="c" type="m" corresp="#s2:l4">vindt</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Om diepe wijsheydt uyt te <rhyme label="b" type="f" corresp="#s2:l3">leeren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Een glans van roem en <rhyme label="a" type="m">voechlijckheydt</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Is door sijn godlijck doen <rhyme label="a" type="m" corresp="#s3:l1">verspreydt</rhyme>.</l>
        <l id="s3:l3" met="4" type="-+">En sijn gerechtheydt kent geen <rhyme label="b" type="f">percken</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Van tijdt, dewijl sy eeuwigh <rhyme label="c" type="m">is</rhyme>.</l>
        <l id="s3:l5" met="4" type="-+">Hy heeft gesticht een <rhyme label="c" type="m" corresp="#s3:l4">heugenis</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Van sijn verwond’rens waerde <rhyme label="b" type="f" corresp="#s3:l3">wercken</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">De Heer barmhertigh, gunst-rijck, <rhyme label="a" type="m">goedt</rhyme>;</l>
        <l id="s4:l2" met="4" type="-+">Van hem wordt alle ziel <rhyme label="a" type="m" corresp="#s4:l1">gevoedt</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Dien sijnes Godtheydts heyligh <rhyme label="b" type="f">vreesen</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Tot in haer binnenst’ heeft <rhyme label="c" type="m">geraeckt</rhyme>.</l>
        <l id="s4:l5" met="4" type="-+">Hy sal des bondts van hem <rhyme label="c" type="m" corresp="#s4:l4">gemaeckt</rhyme></l>
        <l id="s4:l6" met="4" type="-+">In aller eeuw’ gedachtigh <rhyme label="b" type="f" corresp="#s4:l3">wesen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Wel eer heeft hy een klaer <rhyme label="a" type="m">vertoogh</rhyme></l>
        <l id="s5:l2" met="4" type="-+">(Voor sijner uytverkoren <rhyme label="a" type="m" corresp="#s5:l1">oogh</rhyme>)</l>
        <l id="s5:l3" met="4" type="-+">Sijns hoogh-vermogentheydts <rhyme label="b" type="f">gegeven</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Doe hy haer in der volcken <rhyme label="c" type="m">landt</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Ter vaster wooning heeft <rhyme label="c" type="m" corresp="#s5:l4">geplant</rhyme></l>
        <l id="s5:l6" met="4" type="-+">En d’eygenaers daer uyt <rhyme label="b" type="f" corresp="#s5:l3">gedreven</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Van alle (oock hoe kleyne) <rhyme label="a" type="m">daedt</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Die immer hem van handen <rhyme label="a" type="m" corresp="#s6:l1">gaet</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Is Billijckheydt de maet en <rhyme label="b" type="f">regel</rhyme>;</l>
        <l id="s6:l4" met="4" type="-+">All’ wat sijn mondt voor wetten <rhyme label="c" type="m">uyt’t</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">All’ wat sijn heyligh woordt <rhyme label="c" type="m" corresp="#s6:l4">besluyt</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Heeft wisse Waerheydt tot een <rhyme label="b" type="f" corresp="#s6:l3">zegel</rhyme>:</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">’tIs onder-schoort, en vast <rhyme label="a" type="m">geleyt</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Ter eeuwiger <rhyme label="a" type="m" corresp="#s7:l1">onwanckelheydt</rhyme></l>
        <l id="s7:l3" met="4" type="-+">En staet door aller tijden <rhyme label="b" type="f">tijden</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">En heeft oprechticheydt en <rhyme label="c" type="m">trouw</rhyme></l>
        <l id="s7:l5" met="4" type="-+">Tot on-affscheydlijck <rhyme label="c" type="m" corresp="#s7:l4">grondt-gebouw</rhyme></l>
        <l id="s7:l6" met="4" type="-+">En vast geselschap sijner <rhyme label="b" type="f" corresp="#s7:l3">zijden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Doe ellendts over-swaren <rhyme label="a" type="m">last</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Dicht op de sijne lagh <rhyme label="a" type="m" corresp="#s8:l1">getast</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Ontslaeffd’ hy haer verladen <rhyme label="b" type="f">necken</rhyme>;</l>
        <l id="s8:l4" met="4" type="-+">En heeft gewilt dat sijn <rhyme label="c" type="m">verbondt</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Op goddelijcke trouw <rhyme label="c" type="m" corresp="#s8:l4">gegrondt</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Door alle eeuwen heen sou’ <rhyme label="b" type="f" corresp="#s8:l3">strecken</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Sijn naem, sijn over-groote <rhyme label="a" type="m">naem</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Is heyligh en verschricklijck <rhyme label="a" type="m" corresp="#s9:l1">t’saem</rhyme></l>
        <l id="s9:l3" met="4" type="-+">In allen sterfflijcken <rhyme label="b" type="f">gedachten</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">In alle menschelijcke <rhyme label="c" type="m">ziel</rhyme></l>
        <l id="s9:l5" met="4" type="-+">Die oyt aen haren Godt sich <rhyme label="c" type="m" corresp="#s9:l4">hiel</rhyme></l>
        <l id="s9:l6" met="4" type="-+">In ’slevens daden en <rhyme label="b" type="f" corresp="#s9:l3">betrachten</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Wilt ghy, o mensch, den heyl-wegh <rhyme label="a" type="m">in</rhyme>:</l>
        <l id="s10:l2" met="4" type="-+">Godts vrees is Wijsheydts <rhyme label="a" type="m" corresp="#s10:l1">aen-begin</rhyme>;</l>
        <l id="s10:l3" met="4" type="-+">Godts vrees, een recht vernuftigh <rhyme label="b" type="f">Wesen</rhyme>;</l>
        <l id="s10:l4" met="4" type="-+">Godts vrees, een vloeyend <rhyme label="c" type="m">deuchden-stoff</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Godts vrees een bron van eeuwigh <rhyme label="c" type="m" corresp="#s10:l4">loff</rhyme>.</l>
        <l id="s10:l6" met="4" type="-+">Niet beter dan, als, Godt te <rhyme label="b" type="f" corresp="#s10:l3">vreesen</rhyme>.</l>
      </lg>
    </lg>
  </text>

  <author>Hendrik Rintjes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Waecket op o Ziele <rhyme label="a" type="f">vyerigh</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">En treedt tot den Heere <rhyme label="b" type="m">dijn</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Hy sal u seer <rhyme label="a" type="f" corresp="#s1:l1">goedertierigh</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Vriendelijck en ghenadigh <rhyme label="b" type="m" corresp="#s1:l2">zijn</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">D’Armen der <rhyme label="c" type="m">Barmhertigheyt</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Heeft hy wijdt open <rhyme label="c" type="m" corresp="#s1:l5">ghespreyt</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Hy en sal u niet <rhyme label="d" type="f">versmaden</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Maer ontfanghen in <rhyme label="d" type="f" corresp="#s1:l7">ghenaden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Verciert u o Ziele <rhyme label="a" type="f">spoedich</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Doet Heylighe Klee’ren <rhyme label="b" type="m">aen</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Wilt met een Herte <rhyme label="a" type="f" corresp="#s2:l1">ootmoedich</rhyme></l>
        <l id="s2:l4" met="4" type="+-">En ned’rich tot den Heere <rhyme label="b" type="m" corresp="#s2:l2">gaen</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Belijdt hem al u <rhyme label="c" type="m">misdaet</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Biddet vyerich om <rhyme label="c" type="m" corresp="#s2:l5">ghenaet</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Wilt op sijn goetheyt <rhyme label="d" type="f">betrouwen</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Sijn hulpe sult ghy <rhyme label="d" type="f" corresp="#s2:l7">aenschouwen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Waerom vertoeft ghy soo <rhyme label="a" type="f">lange</rhyme>?</l>
        <l id="s3:l2" met="4" type="+-">En blijft vol onrust en <rhyme label="b" type="m">pijn</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">In angst en in sorghe <rhyme label="a" type="f" corresp="#s3:l1">banghe</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Versint doch o Ziele <rhyme label="b" type="m" corresp="#s3:l2">mijn</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">By den Heer vriendelijck en <rhyme label="c" type="m">soet</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Is alleen u hulpe <rhyme label="c" type="m" corresp="#s3:l5">goet</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Des wilt u gheheel <rhyme label="d" type="f">verneeren</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">En tot den Heere <rhyme label="d" type="f" corresp="#s3:l7">inkeeren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">In den Heer is u <rhyme label="a" type="f">verblijden</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">O mijn Ziel, u heyl en <rhyme label="b" type="m">rust</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Hy kan u <rhyme label="a" type="f" corresp="#s4:l1">ghebenedijen</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Daerom gaet tot hem met <rhyme label="b" type="m" corresp="#s4:l2">list</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Spoet u doch eer ‘t is te <rhyme label="c" type="m">laet</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Dese werelt doch <rhyme label="c" type="m" corresp="#s4:l5">versmaet</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Wilt u selven heel <rhyme label="d" type="f">begheven</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Verlaten u zondich <rhyme label="d" type="f" corresp="#s4:l7">leven</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Went u uyt de <rhyme label="a" type="f">Duysterheden</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Gaet tot des levens <rhyme label="b" type="m">Fonteyn</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Soo komt ghy mijn Ziel in <rhyme label="a" type="f" corresp="#s5:l1">vreden</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">En wort suyver ende <rhyme label="b" type="m" corresp="#s5:l2">reyn</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Vry van zond’, Duyvel en <rhyme label="c" type="m">Doot</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Verlost van angst, sorgh en <rhyme label="c" type="m" corresp="#s5:l5">noot</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Door den Heere der <rhyme label="d" type="f">heyrscharen</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">Des wilt u boete niet <rhyme label="d" type="f" corresp="#s5:l7">sparen</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Daer is gheen vreucht-rijcker <rhyme label="a" type="f">leven</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Als met Godt versoent te <rhyme label="b" type="m">zijn</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Sulcken mensche wert <rhyme label="a" type="f" corresp="#s6:l1">ghegheven</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Vreed’ en rust, o Ziele <rhyme label="b" type="m" corresp="#s6:l2">mijn</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Een levende hoop in <rhyme label="c" type="m">Godt</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Dat is sijn licht, deel en <rhyme label="c" type="m" corresp="#s6:l5">lot</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">En by den Heer sal hy <rhyme label="d" type="f">wesen</rhyme></l>
        <l id="s6:l8" met="4" type="+-">In eeuwighe vreucht <rhyme label="d" type="f" corresp="#s6:l7">ghepresen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Daerom mijn ziele, met <rhyme label="a" type="f">vreughden</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Staet naer ‘t leven <rhyme label="b" type="m">eeuwighlijck</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Keert u snel tot alle <rhyme label="a" type="f" corresp="#s7:l1">deughden</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Van de werelt neemt u <rhyme label="b" type="m" corresp="#s7:l2">wijck</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Soeckt hem die uw ziel <rhyme label="c" type="m">bemint</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Wordt als hy gheestelijck <rhyme label="c" type="m" corresp="#s7:l5">ghesint</rhyme>,</l>
        <l id="s7:l7" met="4" type="+-">Met al u kracht en <rhyme label="d" type="f">sinnen</rhyme>,</l>
        <l id="s7:l8" met="4" type="+-">Wilt hem hertelijck <rhyme label="d" type="f" corresp="#s7:l7">beminnen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

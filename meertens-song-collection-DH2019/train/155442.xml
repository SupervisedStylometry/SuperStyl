  <author>Cornelis Maertsz.</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">DOe Godts Volck den Tempel <rhyme label="a" type="f">stichte</rhyme>,</l>
        <l id="s1:l2" met="2" type="+-">En <rhyme label="a" type="f" corresp="#s1:l1">oprichte</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Zions omgescheurde <rhyme label="b" type="m">want</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Vatten zy het Houdt en <rhyme label="c" type="f">Steenen</rhyme>,</l>
        <l id="s1:l5" met="2" type="+-">In den <rhyme label="c" type="f" corresp="#s1:l4">eenen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">En het Swaerdt in d'ander <rhyme label="b" type="m" corresp="#s1:l3">Handt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Als dan quamen de <rhyme label="a" type="f">vyanden</rhyme></l>
        <l id="s2:l2" met="2" type="+-">Haer <rhyme label="a" type="f" corresp="#s2:l1">aenranden</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Schilt en Sabel was <rhyme label="b" type="m">gheree</rhyme>:</l>
        <l id="s2:l4" met="4" type="+-">Als de Bou-Heers mede <rhyme label="c" type="f">quamen</rhyme>,</l>
        <l id="s2:l5" met="2" type="+-">En <rhyme label="c" type="f" corresp="#s2:l4">vernamen</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Na 't ghetimmer, 't gingh al <rhyme label="b" type="m" corresp="#s2:l3">mee</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Siet alhier twee <rhyme label="a" type="f">Ziele-plichten</rhyme>,</l>
        <l id="s3:l2" met="2" type="+-">Klaer in <rhyme label="a" type="f" corresp="#s3:l1">lichten</rhyme>:</l>
        <l id="s3:l3" met="4" type="+-">Bouwt op 't gheen streckt tot Godt <rhyme label="b" type="m">eer</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Tot de deught in Hert en <rhyme label="c" type="f">Nieren</rhyme>,</l>
        <l id="s3:l5" met="2" type="+-">
          <rhyme label="c" type="f" corresp="#s3:l4">Offer-vieren</rhyme>
        </l>
        <l id="s3:l6" met="4" type="+-">Branden doet, voor Godt den <rhyme label="b" type="m" corresp="#s3:l3">Heer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Wilt dan voort met 't woordt des <rhyme label="a" type="f">Heeren</rhyme></l>
        <l id="s4:l2" met="2" type="+-">Oock af <rhyme label="a" type="f" corresp="#s4:l1">keeren</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Sathans schichten, scherp en <rhyme label="b" type="m">fel</rhyme>:</l>
        <l id="s4:l4" met="4" type="+-">Want Godts woordt is eenen <rhyme label="c" type="f">Hellem</rhyme>,</l>
        <l id="s4:l5" met="2" type="+-">Daer die <rhyme label="c" type="f" corresp="#s4:l4">schellem</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Voor ter schuyl sluypt in de <rhyme label="b" type="m" corresp="#s4:l3">Hel</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

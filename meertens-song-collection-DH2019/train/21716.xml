      <category translation="religion">godsdienst</category>
    </categories>
  <author>Philips van Marnix</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">HEer straff niet mijn <rhyme label="a" type="f">misdaden</rhyme></l>
        <l id="s1:l2" met="3" type="-+">In toorn' end' <rhyme label="a" type="f" corresp="#s1:l1">ongenaden</rhyme>:</l>
        <l id="s1:l3" met="3" type="-+">Maer heb met my <rhyme label="b" type="m">gedult</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Wilt ouer my niet <rhyme label="c" type="f">wreken</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Met gramschap sijnd' <rhyme label="c" type="f" corresp="#s1:l4">ontsteken</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Mijn sond' end' sware <rhyme label="b" type="m" corresp="#s1:l3">schult</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">* Ontferm dy Heer <rhyme label="a" type="f">barmhertich</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Mijns drucks end' lydens <rhyme label="a" type="f" corresp="#s2:l1">smertich</rhyme>:</l>
        <l id="s2:l3" met="3" type="-+">Want tis met my <rhyme label="b" type="m">ghedaen</rhyme>.</l>
        <l id="s2:l4" met="3" type="-+">Wil my ghesontheyt <rhyme label="c" type="f">gheuen</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">Want mijn ghebeenten <rhyme label="c" type="f" corresp="#s2:l4">beuen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">End' zijn met schrick <rhyme label="b" type="m" corresp="#s2:l3">bevaen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">* Mijn siel is my <rhyme label="a" type="f">benouwet</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Mijn hert' is schier <rhyme label="a" type="f" corresp="#s3:l1">verflouwet</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Van ancxt tot inden <rhyme label="b" type="m">doot</rhyme>:</l>
        <l id="s3:l4" met="3" type="-+">My is vervaerlijck <rhyme label="c" type="f">banghe</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Maer du o Heer hoe <rhyme label="c" type="f" corresp="#s3:l4">langhe</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Verlaetstu my in <rhyme label="b" type="m" corresp="#s3:l3">noot</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">* Wil dy tot mijnwaerts <rhyme label="a" type="f">wenden</rhyme></l>
        <l id="s4:l2" met="3" type="-+">End' mijn siel vol <rhyme label="a" type="f" corresp="#s4:l1">ellenden</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Verlossen uyt dees' <rhyme label="b" type="m">pijn</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Behoud my, slae my <rhyme label="c" type="f">gade</rhyme></l>
        <l id="s4:l5" met="3" type="-+">End' wil om dijn <rhyme label="c" type="f" corresp="#s4:l4">ghenade</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Mijn salichmaker <rhyme label="b" type="m" corresp="#s4:l3">syn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">* Dewijl' van dy gheen <rhyme label="a" type="f">melding</rhyme></l>
        <l id="s5:l2" met="3" type="-+">In s'doodes <rhyme label="a" type="f" corresp="#s5:l1">ouerwelding</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Doch nymmermeer <rhyme label="b" type="m">gheschiet</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Wien soud' m'oock connen <rhyme label="c" type="f">noemen</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Die dynen lof mocht <rhyme label="c" type="f" corresp="#s5:l4">roemen</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Sijnd' onder s'doots <rhyme label="b" type="m" corresp="#s5:l3">ghebiet</rhyme>?</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">* Mijn treuren doet my <rhyme label="a" type="f">smachten</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Dies my t'bedd' alle <rhyme label="a" type="f" corresp="#s6:l1">nachten</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Swemt in een tranen <rhyme label="b" type="m">badt</rhyme>.</l>
        <l id="s6:l4" met="3" type="-+">Met weenen <rhyme label="c" type="f">onbesweken</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Doe ick mijn koetse <rhyme label="c" type="f" corresp="#s6:l4">leken</rhyme></l>
        <l id="s6:l6" met="3" type="-+">End' maeckse gheheel <rhyme label="b" type="m" corresp="#s6:l3">nat</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">* D'oog is my van te <rhyme label="a" type="f">treuren</rhyme></l>
        <l id="s7:l2" met="3" type="-+">End' schreyen t'elcke <rhyme label="a" type="f" corresp="#s7:l1">euren</rhyme></l>
        <l id="s7:l3" met="3" type="-+">By nae gantz <rhyme label="b" type="m">wtgheteert</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">End' van steed's te <rhyme label="c" type="f">sterrooghen</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Op mijns verdruckers <rhyme label="c" type="f" corresp="#s7:l4">pooghen</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Is heel moed' <rhyme label="b" type="m" corresp="#s7:l3">opghespeert</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">* Laet van my stracx <rhyme label="a" type="f">vertrecken</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Al die haer handt <rhyme label="a" type="f" corresp="#s8:l1">uytstrecken</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Om boosheyt te <rhyme label="b" type="m">begaen</rhyme>:</l>
        <l id="s8:l4" met="3" type="-+">Dewyle Godt <rhyme label="c" type="f">almachtich</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Mijns weenens stemme <rhyme label="c" type="f" corresp="#s8:l4">clachtich</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Beghint te hooren <rhyme label="b" type="m" corresp="#s8:l3">aen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">* De Heer verhoort mijn <rhyme label="a" type="f">claghen</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">End' laet hem wel <rhyme label="a" type="f" corresp="#s9:l1">behaghen</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Mijn hertelijck <rhyme label="b" type="m">ghebet</rhyme>.</l>
        <l id="s9:l4" met="3" type="-+">Mijn smeecken seer <rhyme label="c" type="f">ootmoedich</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Ontfangt de Heere <rhyme label="c" type="f" corresp="#s9:l4">goedich</rhyme></l>
        <l id="s9:l6" met="3" type="-+">End' ernstich daer op <rhyme label="b" type="m" corresp="#s9:l3">lett</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">* Dies sullen die my <rhyme label="a" type="f">haten</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Beschaemt zijn uyter <rhyme label="a" type="f" corresp="#s10:l1">maten</rhyme></l>
        <l id="s10:l3" met="3" type="-+">End' staen in grooten <rhyme label="b" type="m">schrick</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Sy sullen <rhyme label="c" type="f">wederkeeren</rhyme></l>
        <l id="s10:l5" met="3" type="-+">Met schand' end' met <rhyme label="c" type="f" corresp="#s10:l4">oneeren</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Stracx op een <rhyme label="b" type="m" corresp="#s10:l3">ooghenblick</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

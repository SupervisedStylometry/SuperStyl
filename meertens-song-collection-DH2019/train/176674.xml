  <author>Hendrik Rintjes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Ick heb van joncks ghehadt een <rhyme label="a" type="m">vrunt</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Maer doen my haren ganck wert <rhyme label="a" type="m" corresp="#s1:l1">kunt</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Doen heb ickse <rhyme label="b" type="f">begheven</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">O Heer my u ghenade <rhyme label="a" type="m" corresp="#s1:l1">gunt</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Sy staet my nae mijn <rhyme label="b" type="f" corresp="#s1:l3">leven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">O menschen denckt tot dees <rhyme label="a" type="m">termijn</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Wat dit voor eenen vrint mach <rhyme label="a" type="m" corresp="#s2:l1">zijn</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Ghy dient haer noch met <rhyme label="b" type="f">lusten</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Ghy moetse schuwen als <rhyme label="a" type="m" corresp="#s2:l1">fenijn</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Of ghy derft Godes <rhyme label="b" type="f" corresp="#s2:l3">rusten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Haer vrientschap gheeft <rhyme label="a" type="m">verderffenis</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Want al die haren vrient noch <rhyme label="a" type="m" corresp="#s3:l1">is</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Dat blijven Gods <rhyme label="b" type="f">vyanden</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Die werpt men in de <rhyme label="a" type="m" corresp="#s3:l1">duysternis</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Daer knerssinghe is der <rhyme label="b" type="f" corresp="#s3:l3">tanden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">O Alle ghy Adams <rhyme label="a" type="m">gheslacht</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Des werelts vrientschap niet so <rhyme label="a" type="m" corresp="#s4:l1">acht</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Dat ghy u ziel gaet <rhyme label="b" type="f">wonden</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Dit is ‘t dat ghy van haer <rhyme label="a" type="m" corresp="#s4:l1">verwacht</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Die doot dat loon der <rhyme label="b" type="f" corresp="#s4:l3">zonden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Neemt ter herten dat Christus <rhyme label="a" type="m">beedt</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Voor sijn vrienden eer dat hy <rhyme label="a" type="m" corresp="#s5:l1">leedt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">En niet voor ‘s werelts <rhyme label="b" type="f">Scharen</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Zijt ghy nu van den sijnen <rhyme label="a" type="m" corresp="#s5:l1">neet</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Seght of ‘s werelts <rhyme label="b" type="f" corresp="#s5:l3">Dienaren</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Nu dat ghy wildet <rhyme label="a" type="m">onghestoort</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Weten wie dat ghy <rhyme label="a" type="m" corresp="#s6:l1">toe-behoort</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">In die Schrift machmen ‘t <rhyme label="b" type="f">lesen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Christus spreeckt die blijft by mijn <rhyme label="a" type="m" corresp="#s6:l1">woort</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Sal mijn Discipel <rhyme label="b" type="f" corresp="#s6:l3">wesen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Elders leert ons die Schrift ook <rhyme label="a" type="m">recht</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Wie dat ghy dient ghy zijt sijn <rhyme label="a" type="m" corresp="#s7:l1">knecht</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Die gherechtigheyt ten <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Maer s’eeuwighe doot sal zijn het <rhyme label="a" type="m" corresp="#s7:l1">recht</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Die haer tot zonden <rhyme label="b" type="f" corresp="#s7:l3">gheven</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Siet nu u eyghen wandel <rhyme label="a" type="m">an</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Oft u conscientie rechten <rhyme label="a" type="m" corresp="#s8:l1">kan</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Dat ghy zijt van Gods <rhyme label="b" type="f">erven</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Die sijn woort hoort oordeelt daer <rhyme label="a" type="m" corresp="#s8:l1">van</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Die nae ‘t vlees leeft moet <rhyme label="b" type="f" corresp="#s8:l3">sterven</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Iae lieve mensch hier is gheen <rhyme label="a" type="m">raedt</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Soo ghy niet vliet van alle <rhyme label="a" type="m" corresp="#s9:l1">quaet</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Niemant dient recht twee <rhyme label="b" type="f">Heeren</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Hierom des Duyvels dienst <rhyme label="a" type="m" corresp="#s9:l1">verlaet</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">En wilt tot Christum <rhyme label="b" type="f" corresp="#s9:l3">keeren</rhyme></l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Alle dat mach worden <rhyme label="a" type="m">ghenoemt</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Christus bloet als de werelt <rhyme label="a" type="m" corresp="#s10:l1">roemt</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Iae dat hy is <rhyme label="b" type="f">verresen</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Ten baet u niet ghy blijft <rhyme label="a" type="m" corresp="#s10:l1">verdoemt</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Soo ghy Godt niet wilt <rhyme label="b" type="f" corresp="#s10:l3">vreesen</rhyme>,</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Christus spreeckt niemant <rhyme label="a" type="m">onghefaelt</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Klimt ten Hemel dan die <rhyme label="a" type="m" corresp="#s11:l1">af-daelt</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">‘t Welck is des menschen <rhyme label="b" type="f">Soone</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Wie met hem is de Schrift <rhyme label="a" type="m" corresp="#s11:l1">verhaelt</rhyme></l>
        <l id="s11:l5" met="3" type="-+">Ontfanght met hem een <rhyme label="b" type="f" corresp="#s11:l3">loone</rhyme></l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Oft ghy nu seght dat hy niet <rhyme label="a" type="m">quam</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Die werelt te verdoemen <rhyme label="a" type="m" corresp="#s12:l1">gram</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Maer zaligheyt te <rhyme label="b" type="f">gheven</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Ick vraegh die hem niet an en <rhyme label="a" type="m" corresp="#s12:l1">nam</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">Of die eeuwigh sal <rhyme label="b" type="f" corresp="#s12:l3">leven</rhyme>?</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Bedenckt wat Christus doet <rhyme label="a" type="m">verstaen</rhyme></l>
        <l id="s13:l2" met="4" type="-+">Wie niet ghelooft mijn soet <rhyme label="a" type="m" corresp="#s13:l1">vermaen</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Die en sal ick niet <rhyme label="b" type="f">rechten</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Hy heeft sijn oordeel al <rhyme label="a" type="m" corresp="#s13:l1">ontfaen</rhyme>,</l>
        <l id="s13:l5" met="3" type="-+">Mijn woort sal hem <rhyme label="b" type="f" corresp="#s13:l3">bevechten</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Wilt ghy nu segghen ick <rhyme label="a" type="m">gheloof</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">En blijven noch al even <rhyme label="a" type="m" corresp="#s14:l1">doof</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Soo spreeckt Christus wilt <rhyme label="b" type="f">mercken</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">Die my ghelooft dit is den <rhyme label="a" type="m" corresp="#s14:l1">kloof</rhyme>,</l>
        <l id="s14:l5" met="3" type="-+">Moet doen dese emijn <rhyme label="b" type="f" corresp="#s14:l3">wercken</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Soo wie dat nu dees werelt <rhyme label="a" type="m">dient</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">En voort aen blijven wil haer <rhyme label="a" type="m" corresp="#s15:l1">vrient</rhyme>,</l>
        <l id="s15:l3" met="3" type="-+">Diens ziele gaet <rhyme label="b" type="f">verlooren</rhyme>,</l>
        <l id="s15:l4" met="4" type="-+">Denckt wat die Schrift doch hier mee <rhyme label="a" type="m" corresp="#s15:l1">mient</rhyme>:</l>
        <l id="s15:l5" met="3" type="-+">Och waert ghy noyt <rhyme label="b" type="f" corresp="#s15:l3">gheboren</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Daerom o menschen wie ghy <rhyme label="a" type="m">zijt</rhyme>,</l>
        <l id="s16:l2" met="4" type="-+">Betert u het is meer dan <rhyme label="a" type="m" corresp="#s16:l1">tijdt</rhyme>,</l>
        <l id="s16:l3" met="3" type="-+">Ghelooft Gods soete <rhyme label="b" type="f">spraecken</rhyme>,</l>
        <l id="s16:l4" met="4" type="-+">Schout die werelt en dient met <rhyme label="a" type="m" corresp="#s16:l1">vlijt</rhyme>,</l>
        <l id="s16:l5" met="3" type="-+">Die u zaligh kan <rhyme label="b" type="f" corresp="#s16:l3">maken</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">En denckt niet eens mijn zonden <rhyme label="a" type="m">groot</rhyme></l>
        <l id="s17:l2" met="4" type="-+">Sal my verweghen totter <rhyme label="a" type="m" corresp="#s17:l1">doot</rhyme>,</l>
        <l id="s17:l3" met="3" type="-+">Voor my is gheen <rhyme label="b" type="f">ghenade</rhyme>,</l>
        <l id="s17:l4" met="4" type="-+">Indien ghy doet oprechte <rhyme label="a" type="m" corresp="#s17:l1">boet</rhyme>,</l>
        <l id="s17:l5" met="3" type="-+">Soo salse u niet <rhyme label="b" type="f" corresp="#s17:l3">schade</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Dit ghetuyght ons een recht <rhyme label="a" type="m">Propheet</rhyme>,</l>
        <l id="s18:l2" met="4" type="-+">En seght hier by alsulk <rhyme label="a" type="m" corresp="#s18:l1">bescheet</rhyme>,</l>
        <l id="s18:l3" met="3" type="-+">Al die ‘t goet doen <rhyme label="b" type="f">verlaten</rhyme>,</l>
        <l id="s18:l4" met="4" type="-+">En die onrecht en zonde <rhyme label="a" type="m" corresp="#s18:l1">deet</rhyme>,</l>
        <l id="s18:l5" met="3" type="-+">Haer goet sal haer niet <rhyme label="b" type="f" corresp="#s18:l3">baten</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">In uwer herten dit <rhyme label="a" type="m">betracht</rhyme>,</l>
        <l id="s19:l2" met="4" type="-+">Met raet, met daedt, ende met <rhyme label="a" type="m" corresp="#s19:l1">kracht</rhyme>,</l>
        <l id="s19:l3" met="3" type="-+">Wilt u van zonden <rhyme label="b" type="f">keere</rhyme>,</l>
        <l id="s19:l4" met="4" type="-+">Al is ‘t dat u die werlt <rhyme label="a" type="m" corresp="#s19:l1">belacht</rhyme>,</l>
        <l id="s19:l5" met="3" type="-+">Soo dedense onsen <rhyme label="b" type="f" corresp="#s19:l3">Heere</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">Tot hem voecht u alle <rhyme label="a" type="m">ghelijck</rhyme>,</l>
        <l id="s20:l2" met="4" type="-+">Hy sal u gheven sijnen <rhyme label="a" type="m" corresp="#s20:l1">rijck</rhyme>,</l>
        <l id="s20:l3" met="3" type="-+">Laet u niet meer <rhyme label="b" type="f">verleyden</rhyme>,</l>
        <l id="s20:l4" met="4" type="-+">En schouwet doch recht des Duyvels <rhyme label="a" type="m" corresp="#s20:l1">strijck</rhyme>,</l>
        <l id="s20:l5" met="3" type="-+">Dat bidt ick u in ‘t <rhyme label="b" type="f" corresp="#s20:l3">scheyden</rhyme></l>
      </lg>
    </lg>
  </text>
</song>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Als lieve vrienden <rhyme label="a" type="f">pleghen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Zijnde gheest’lijck <rhyme label="b" type="m">ghesint</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Soo wensch ick u Gods <rhyme label="a" type="f" corresp="#s1:l1">zeghen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Voor al, mijn lieve <rhyme label="b" type="m" corresp="#s1:l2">kindt</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Ghenade goet // u by zijn <rhyme label="c" type="m">moet</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Int hert sy by u <rhyme label="c" type="m" corresp="#s1:l5">blijf</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Tot dat ghy hebt <rhyme label="a" type="f" corresp="#s1:l1">vercreghen</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Dat ick alhier <rhyme label="c" type="m" corresp="#s1:l5">beschrijf</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ghesont wil u nu <rhyme label="a" type="f">maken</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Gods ghenade <rhyme label="b" type="m">perfeckt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Dat ghy wel meucht <rhyme label="a" type="f" corresp="#s2:l1">gheraken</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Door dit licht <rhyme label="b" type="m" corresp="#s2:l2">onbevleckt</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Ghenade reen // ons nu <rhyme label="c" type="m">verscheen</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Van Godt gheheel <rhyme label="c" type="m" corresp="#s2:l5">heelsaem</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Dit goet doet ons <rhyme label="a" type="f" corresp="#s2:l1">ghenaken</rhyme></l>
        <l id="s2:l8" met="3" type="-+">In Christi Iesu <rhyme label="c" type="m" corresp="#s2:l5">naem</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Alsoo sy doet <rhyme label="a" type="f">ghenesen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Sy ons oock <rhyme label="b" type="m">onderwijst</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">het ongoddelijck <rhyme label="a" type="f" corresp="#s3:l1">wesen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Sy oock seere <rhyme label="b" type="m" corresp="#s3:l2">misprijst</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Sober en recht // veerdich en <rhyme label="c" type="m">slecht</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Daer toe sy ons nu <rhyme label="c" type="m" corresp="#s3:l5">raet</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Gods ghenade <rhyme label="a" type="f" corresp="#s3:l1">ghepresen</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Tot onser eyghen <rhyme label="c" type="m" corresp="#s3:l5">baet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Iae sy gaet ons <rhyme label="a" type="f">verstercken</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Gods wil te doen <rhyme label="b" type="m">eenpaer</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">En helpt ons crachtich <rhyme label="a" type="f" corresp="#s4:l1">wercken</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Als ons den last valt <rhyme label="b" type="m" corresp="#s4:l2">swaer</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Wat onghesont // nu is <rhyme label="c" type="m">terstont</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Sy’t ons te kennen <rhyme label="c" type="m" corresp="#s4:l5">gheeft</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Dat wy’t connen <rhyme label="a" type="f" corresp="#s4:l1">bemercken</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Waerschoutse ons <rhyme label="c" type="m" corresp="#s4:l5">beleeft</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Liefste, volght desen <rhyme label="a" type="f">rade</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Soo Paulus tuyght <rhyme label="b" type="m">bequaem</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Sterckt u in die <rhyme label="a" type="f" corresp="#s5:l1">ghenade</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Gheweldt te doen <rhyme label="b" type="m" corresp="#s5:l2">eersaem</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Om Godes Rijck // seer <rhyme label="c" type="m">vromelijck</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Begeert sy nu ter <rhyme label="c" type="m" corresp="#s5:l5">tijt</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Vertoeft doch niet te <rhyme label="a" type="f" corresp="#s5:l1">spade</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Nu ghy beroepen <rhyme label="c" type="m" corresp="#s5:l5">zijt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ten eynd’ sal sy u <rhyme label="a" type="f">leyden</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Rechten en helpen <rhyme label="b" type="m">me</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Int werck u hulp <rhyme label="a" type="f" corresp="#s6:l1">bereyden</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Tot ghy in s’Hemels <rhyme label="b" type="m" corresp="#s6:l2">ste</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Sult binnen gaen // en by u <rhyme label="c" type="m">staen</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Wat u hinderen <rhyme label="c" type="m" corresp="#s6:l5">sal</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Sal sy van u doen <rhyme label="a" type="f" corresp="#s6:l1">scheyden</rhyme></l>
        <l id="s6:l8" met="3" type="-+">T’noodich u gheven <rhyme label="c" type="m" corresp="#s6:l5">al</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Niet en sal ons <rhyme label="a" type="f">ontbreken</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Soo dese by ons <rhyme label="b" type="m">blijft</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Bidt daerom <rhyme label="a" type="f" corresp="#s7:l1">onbesweken</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Int aenhouden <rhyme label="b" type="m" corresp="#s7:l2">verstijft</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Om haer hulp goet // regeeringh <rhyme label="c" type="m">soet</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Spijse, int Christen <rhyme label="c" type="m" corresp="#s7:l5">werck</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Volherdich, haer <rhyme label="a" type="f" corresp="#s7:l1">voorspreken</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Dit sal u maken <rhyme label="c" type="m" corresp="#s7:l5">sterck</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">In volmaecktheyt <rhyme label="a" type="f">aendachtich</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">En dat ghy nu <rhyme label="b" type="m">begeert</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Vervult sy wel en <rhyme label="a" type="f" corresp="#s8:l1">crachtich</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Den moedt sy ons <rhyme label="b" type="m" corresp="#s8:l2">vermeert</rhyme>.</l>
        <l id="s8:l5" met="4" type="-+">Dat wy niet min // die haven <rhyme label="c" type="m">in</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Sullen zeylen te <rhyme label="c" type="m" corresp="#s8:l5">gaer</rhyme></l>
        <l id="s8:l7" met="3" type="-+">By onsen Godt <rhyme label="a" type="f" corresp="#s8:l1">almachtich</rhyme></l>
        <l id="s8:l8" met="3" type="-+">En sijn Hemelsche <rhyme label="c" type="m" corresp="#s8:l5">schaer</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Seer doet nu <rhyme label="a" type="f">overvloeyen</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Gods ghena in dees <rhyme label="b" type="m">tijdt</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Och mocht sy by ons <rhyme label="a" type="f" corresp="#s9:l1">bloeyen</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Int hert ontloken <rhyme label="b" type="m" corresp="#s9:l2">wijdt</rhyme>:</l>
        <l id="s9:l5" met="4" type="-+">Maeghd’lijck eerbaer // voor een nieu <rhyme label="c" type="m">Iae</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Neemt dit van my in <rhyme label="c" type="m" corresp="#s9:l5">danck</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">In dees ghenae wilt <rhyme label="a" type="f" corresp="#s9:l1">groeyen</rhyme></l>
        <l id="s9:l8" met="3" type="-+">Nu al u leven <rhyme label="c" type="m" corresp="#s9:l5">lanck</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Dochter neemt dit int <rhyme label="a" type="f">goede</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Nae’t lichaem <rhyme label="b" type="m">onbekent</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Met Christ’lijcken <rhyme label="a" type="f" corresp="#s10:l1">ghemoede</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Ben ick t’uwaerts <rhyme label="b" type="m" corresp="#s10:l2">ghewent</rhyme>:</l>
        <l id="s10:l5" met="4" type="-+">Wordt niet vertsaecht // om dat ghy <rhyme label="c" type="m">draecht</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Der Menschen smaet <rhyme label="c" type="m" corresp="#s10:l5">alleyn</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Godt neem u in sijn <rhyme label="a" type="f" corresp="#s10:l1">hoede</rhyme></l>
        <l id="s10:l8" met="3" type="-+">Brengh u in s’Hemels <rhyme label="c" type="m" corresp="#s10:l5">pleyn</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

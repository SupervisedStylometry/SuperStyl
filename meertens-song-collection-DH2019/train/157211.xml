  <author>Cornelis Maertsz.</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">HAd ick Davids <rhyme label="a" type="f">vinghers</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">En zijn heyl'ge <rhyme label="b" type="f">snaren</rhyme>,</l>
        <l id="s1:l3" met="3" type="+-">'k Soud het puyck der <rhyme label="a" type="f" corresp="#s1:l1">singhers</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">Met mijn Harp <rhyme label="b" type="f" corresp="#s1:l2">voor-varen</rhyme>,</l>
        <l id="s1:l5" met="3" type="+-">En haer <rhyme label="b" type="f" corresp="#s1:l2">openbaren</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Het heyl van Godts <rhyme label="c" type="m">Paleys</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Dat d'Ooren // niet <rhyme label="d" type="f">hooren</rhyme>,</l>
        <l id="s1:l8" met="2" type="-+">Noch d'ooghen // sien <rhyme label="e" type="f">mooghen</rhyme></l>
        <l id="s1:l9" met="2" type="+-">In 't sondigh <rhyme label="c" type="m" corresp="#s1:l6">vleys</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">'k Soud de heyl'ge <rhyme label="a" type="f">sinnen</rhyme></l>
        <l id="s2:l2" met="3" type="+-">Van Godts kind'ren, <rhyme label="b" type="f">leyen</rhyme></l>
        <l id="s2:l3" met="3" type="+-">Tot den Hemel <rhyme label="a" type="f" corresp="#s2:l1">binnen</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">Daer de Eng'le <rhyme label="b" type="f" corresp="#s2:l2">Reyen</rhyme>,</l>
        <l id="s2:l5" met="3" type="+-">Godes lof <rhyme label="b" type="f" corresp="#s2:l2">verbreyen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">En laten haer <rhyme label="c" type="m">aldaer</rhyme></l>
        <l id="s2:l7" met="2" type="-+">Om-vatten // de <rhyme label="d" type="f">schatten</rhyme>,</l>
        <l id="s2:l8" met="2" type="-+">Die d'Heere // <rhyme label="e" type="f">vereeren</rhyme></l>
        <l id="s2:l9" met="2" type="+-">Sal aen sijn <rhyme label="c" type="m" corresp="#s2:l6">schaer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Nu voegh ick mijn <rhyme label="a" type="f">toonen</rhyme></l>
        <l id="s3:l2" met="3" type="+-">Na mijn swacke <rhyme label="b" type="f">krachten</rhyme>,</l>
        <l id="s3:l3" met="3" type="+-">Om op 's Hemels <rhyme label="a" type="f" corresp="#s3:l1">Kroone</rhyme></l>
        <l id="s3:l4" met="3" type="+-">En 't pit van <rhyme label="b" type="f" corresp="#s3:l2">gedachten</rhyme></l>
        <l id="s3:l5" met="3" type="+-">Neerstighlijck te <rhyme label="b" type="f" corresp="#s3:l2">achten</rhyme>:</l>
        <l id="s3:l6" met="3" type="-+">Maer 'k swijmel in <rhyme label="c" type="m">onmacht</rhyme>.</l>
        <l id="s3:l7" met="2" type="-+">Wie kan doch // daer van <rhyme label="d" type="f">noch</rhyme></l>
        <l id="s3:l8" met="2" type="-+">Afbeelden // de <rhyme label="e" type="f">weelden</rhyme></l>
        <l id="s3:l9" met="2" type="+-">En sal'ge <rhyme label="c" type="m" corresp="#s3:l6">pracht</rhyme>?</l>
      </lg>
    </lg>
  </text>
</song>

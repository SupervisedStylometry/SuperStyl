<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>183500</id>
    <date>
      <year-start>1789</year-start>
      <year-end>1789</year-end>
    </date>
    <tags/>
    <melody>Hoe zoet is het daar de vriendschap woont</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Hoe klopt het hart; ô Hemelsch <rhyme label="a" type="m">woord</rhyme>!</l>
        <l id="s1:l2" met="3" type="-+">ô Vryheid! <rhyme label="b" type="m">levensbron</rhyme>!</l>
        <l id="s1:l3" met="4" type="-+">Gy zyt het, die ons 't meest <rhyme label="a" type="m" corresp="#s1:l1">bekoord</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Van 't geen m' ooit wenschen <rhyme label="b" type="m" corresp="#s1:l2">kon</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Gy zesent, wien uw min <rhyme label="c" type="m">bezielt</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Terwyl gy, wie u haat, <rhyme label="c" type="m" corresp="#s1:l5">vernielt</rhyme>,</l>
        <l id="s1:l7" met="1" type="-+"><rhyme label="d" type="m">Godin</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Nooit heerscht gevloekte <rhyme label="a" type="m">Slavernij</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Waar heen ge uw stappen <rhyme label="b" type="m">keert</rhyme>.</l>
        <l id="s2:l3" met="4" type="-+">Waar ook uw val berokkend <rhyme label="a" type="m" corresp="#s2:l1">zy</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Daar wordt uw macht <rhyme label="b" type="m" corresp="#s2:l2">vermeerd</rhyme>;</l>
        <l id="s2:l5" met="4" type="-+">Wyl ieder goed en bloed <rhyme label="c" type="m">verpandt</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Voor Vryheid en voor 't <rhyme label="c" type="m" corresp="#s2:l5">Vaderland</rhyme>:</l>
        <l id="s2:l7" met="1" type="-+">Voor 't <rhyme label="d" type="m">Land</rhyme>,</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">En zegt, daar hem de dood <rhyme label="a" type="m">genaakt</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Ik sluit, met vreugd, myn <rhyme label="b" type="m">mond</rhyme>;</l>
        <l id="s3:l3" met="4" type="-+">Ik heb. naar Eed er Plicht, <rhyme label="a" type="m" corresp="#s3:l1">gewaakt</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Tot aan myn laatsten <rhyme label="b" type="m" corresp="#s3:l2">stond</rhyme>:</l>
        <l id="s3:l5" met="4" type="-+">'k Sterf, schoon geen Wapens in de <rhyme label="c" type="m">hand</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Voor Vryheid en voor 't <rhyme label="c" type="m" corresp="#s3:l5">Vaderland</rhyme>;</l>
        <l id="s3:l7" met="1" type="-+">Met <rhyme label="d" type="m">vreugd</rhyme>,</l>
      </lg>
    </lg>
  </text>
</song>

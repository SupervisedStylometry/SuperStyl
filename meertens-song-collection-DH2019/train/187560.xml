    <tags/>
    <melody>Wanneer ik slaap</melody>
  <author>Claes Stapel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">NAdien gy dan zijt op <rhyme label="a" type="f">gereezen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Met u verstand om vroom te <rhyme label="a" type="f" corresp="#s1:l1">weezen</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Zoo slaat het teere <rhyme label="b" type="m">oog</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Naa 't Heemelz <rhyme label="b" type="m" corresp="#s1:l3">hoog</rhyme>,</l>
        <l id="s1:l5" met="3" type="+-">Daar uw Heere <rhyme label="c" type="m">zit</rhyme>,</l>
        <l id="s1:l6" met="3" type="+-">Die nu voor u <rhyme label="c" type="m" corresp="#s1:l5">bid</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Die nu bid en zelfs kan <rhyme label="d" type="f">geeven</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">'t Geen noodig is voor 't geestlijk <rhyme label="d" type="f" corresp="#s1:l7">leeven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Dit is 't af-snijden van de <rhyme label="a" type="f">handen</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Het los doen van der zonden <rhyme label="a" type="f" corresp="#s2:l1">banden</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Met 't ingeworteld <rhyme label="b" type="m">quaad</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">Het welk God <rhyme label="b" type="m" corresp="#s2:l3">haat</rhyme>.</l>
        <l id="s2:l5" met="3" type="+-">Daarom doet dan <rhyme label="c" type="m">aan</rhyme></l>
        <l id="s2:l6" met="3" type="+-">Om voor hem te <rhyme label="c" type="m" corresp="#s2:l5">staan</rhyme></l>
        <l id="s2:l7" met="4" type="-+">Om voor hem te staan <rhyme label="d" type="f">verkooren</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">Als heilig en weeder <rhyme label="d" type="f" corresp="#s2:l7">gebooren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Gehoorzaamheyd naa Godes <rhyme label="a" type="f">wille</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Dit kan alleen zijn tooren <rhyme label="a" type="f" corresp="#s3:l1">stillen</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Daarom maak een <rhyme label="b" type="m">besluit</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">Steek oogen <rhyme label="b" type="m" corresp="#s3:l3">uit</rhyme>,</l>
        <l id="s3:l5" met="3" type="+-">Dat is zulke <rhyme label="c" type="m">lust</rhyme>,</l>
        <l id="s3:l6" met="3" type="+-">Die 't gemoed <rhyme label="c" type="m" corresp="#s3:l5">ontrust</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Die 't gemoed ontrust tot <rhyme label="d" type="f">zonden</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">En ziel en lighaam t' zaam komt <rhyme label="d" type="f" corresp="#s3:l7">wonden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Wat uit-vlugt kan de Mensch dan <rhyme label="a" type="f">zoeken</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Haal uit vry alle donk're <rhyme label="a" type="f" corresp="#s4:l1">hoeken</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Van schijn <rhyme label="b" type="m">bedriegery</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">Op eene <rhyme label="b" type="m" corresp="#s4:l3">ry</rhyme>,</l>
        <l id="s4:l5" met="3" type="+-">En toetst' aan den <rhyme label="c" type="m">dag</rhyme>,</l>
        <l id="s4:l6" met="3" type="+-">Dien gy nu hier <rhyme label="c" type="m" corresp="#s4:l5">sag</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Dien gy nu hier sag <rhyme label="d" type="f">gebieden</rhyme>,</l>
        <l id="s4:l8" met="4" type="-+">Het goed te doen en 't quaad te <rhyme label="d" type="f" corresp="#s4:l7">vlieden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

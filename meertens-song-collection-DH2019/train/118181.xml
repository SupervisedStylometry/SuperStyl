  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">INdien dat wel verwaert <rhyme label="a" type="f">zijn</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Een vriend met zijn <rhyme label="b" type="m">gesel</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Vel meer daer twee gepaert <rhyme label="a" type="f" corresp="#s1:l1">zijn</rhyme></l>
        <l id="s1:l4" met="3" type="-+">In 't Houw'lijk, gaet'et <rhyme label="b" type="m" corresp="#s1:l2">wel</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">d'Een vriend ontmoet den <rhyme label="c" type="f">ander</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Ter regter tijt, maer <rhyme label="d" type="m">meer</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Een Man en Vrouw <rhyme label="c" type="f" corresp="#s1:l5">malkander</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Na beyder haer <rhyme label="d" type="m" corresp="#s1:l6">begeer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Men magh, o <rhyme label="a" type="f">nieuw-getrouden</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">O lieve twee, met <rhyme label="b" type="m">reen</rhyme></l>
        <l id="s2:l3" met="3" type="-+">U dan gelukkig <rhyme label="a" type="f" corresp="#s2:l1">houden</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Die zijt geworden <rhyme label="b" type="m" corresp="#s2:l2">een</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Verheugt u <rhyme label="c" type="f">alle-beyde</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Zyt t'samen wel <rhyme label="d" type="m">vernoegt</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Geen mensch en sal weer <rhyme label="c" type="f" corresp="#s2:l5">scheyden</rhyme></l>
        <l id="s2:l8" met="3" type="-+">'t Geen Godt te samen <rhyme label="d" type="m" corresp="#s2:l6">voegt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Uw Tafel, uw <rhyme label="a" type="f">slaep-stede</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Uw lichaem ende <rhyme label="b" type="m">geest</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Ja alle dingen <rhyme label="a" type="f" corresp="#s3:l1">mede</rhyme></l>
        <l id="s3:l4" met="3" type="-+">In 't minst' en in het <rhyme label="b" type="m" corresp="#s3:l2">meest'</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Hebt gy gemeen te <rhyme label="c" type="f">same</rhyme>:</l>
        <l id="s3:l6" met="3" type="-+">Dies looft daer voor den <rhyme label="d" type="m">Heer</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">En sijnen heil'gen <rhyme label="c" type="f" corresp="#s3:l5">Naeme</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Geeft maer alleen de <rhyme label="d" type="m" corresp="#s3:l6">eer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Godt die u heeft <rhyme label="a" type="f">gebonden</rhyme></l>
        <l id="s4:l2" met="3" type="-+">In deesen uwen <rhyme label="b" type="m">staet</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Wil u tot allen <rhyme label="a" type="f" corresp="#s4:l1">stonden</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Geleiden waer gy <rhyme label="b" type="m" corresp="#s4:l2">gaet</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">En sijnen <rhyme label="c" type="f">zegen-geven</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Hier tijdlik, en hier <rhyme label="d" type="m">naer</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Het eeuwig salig <rhyme label="c" type="f" corresp="#s4:l5">leven</rhyme>:</l>
        <l id="s4:l8" met="3" type="-+">Ja, Amen, 't werde <rhyme label="d" type="m" corresp="#s4:l6">waer</rhyme>.</l>
      </lg>
    </lg>
  </text>

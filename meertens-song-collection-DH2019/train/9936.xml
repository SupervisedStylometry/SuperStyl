    <melody>Wees al verblijd gij die vrouw Venus' kinderen zijt</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Karel van Mander</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">Dat wijs <rhyme label="a" type="m">ingien</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Salomon, die heeft sien <rhyme label="a" type="m" corresp="#s1:l1">gheschien</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">End' heerschappen// over veel <rhyme label="b" type="f">Jaren</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Onder de <rhyme label="a" type="m" corresp="#s1:l1">lien</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Een groot ongheluck, <rhyme label="c" type="m">want</rhyme></l>
        <l id="s1:l6" met="2" type="-+">T'was <rhyme label="c" type="m" corresp="#s1:l5">t'onverstant</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Paulus in der Galaten <rhyme label="c" type="m" corresp="#s1:l5">lant</rhyme>,</l>
        <l id="s1:l8" met="2" type="-+">Oock wel <rhyme label="c" type="m" corresp="#s1:l5">bevant</rhyme></l>
        <l id="s1:l9" met="4" type="-+">Dit ongheluck seer <rhyme label="c" type="m" corresp="#s1:l5">abundant</rhyme>,</l>
        <l id="s1:l10" met="3" type="+-">Voort varen// t'scheen die <rhyme label="b" type="f" corresp="#s1:l3">scharen</rhyme></l>
        <l id="s1:l11" met="2" type="-+">Betoovert <rhyme label="b" type="f" corresp="#s1:l3">waren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Broeders <rhyme label="a" type="m">minioot</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Het onverstant is noch seer <rhyme label="a" type="m" corresp="#s2:l1">groot</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">By velen bloot// die niet en <rhyme label="b" type="f">smaken</rhyme></l>
        <l id="s2:l4" met="2" type="-+">T'verstandich <rhyme label="a" type="m" corresp="#s2:l1">broot</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Maer voor twistich <rhyme label="c" type="m">abuys</rhyme>,</l>
        <l id="s2:l6" met="2" type="-+">Met groot <rhyme label="c" type="m" corresp="#s2:l5">ghedruys</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Bouwen sy haer selven <rhyme label="c" type="m" corresp="#s2:l5">quansuys</rhyme></l>
        <l id="s2:l8" met="2" type="-+">Een stadt oft <rhyme label="c" type="m" corresp="#s2:l5">huys</rhyme>,</l>
        <l id="s2:l9" met="4" type="-+">In Sinear, maer al <rhyme label="c" type="m" corresp="#s2:l5">t'confuys</rhyme></l>
        <l id="s2:l10" met="3" type="+-">Der spraken// in het <rhyme label="b" type="f" corresp="#s2:l3">maken</rhyme>,</l>
        <l id="s2:l11" met="2" type="-+">Sal t'werck doen <rhyme label="b" type="f" corresp="#s2:l3">staken</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Vrienden <rhyme label="a" type="m">eerbaer</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">En weest niet onverstandich, <rhyme label="a" type="m" corresp="#s3:l1">maer</rhyme></l>
        <l id="s3:l3" met="4" type="-+">V herte naer, wijsheyt wilt <rhyme label="b" type="f">keeren</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">Om nemen <rhyme label="a" type="m" corresp="#s3:l1">waer</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Wat daer Gods wille <rhyme label="c" type="m">zy</rhyme>,</l>
        <l id="s3:l6" met="2" type="-+">Dat woordt <rhyme label="c" type="m" corresp="#s3:l5">Christi</rhyme></l>
        <l id="s3:l7" met="4" type="-+">Woon' u, in aller wijsheyt, <rhyme label="c" type="m" corresp="#s3:l5">by</rhyme>,</l>
        <l id="s3:l8" met="2" type="-+">End' singhet <rhyme label="c" type="m" corresp="#s3:l5">vry</rhyme></l>
        <l id="s3:l9" met="4" type="-+">Gheestelijcke Liedekens <rhyme label="c" type="m" corresp="#s3:l5">ghy</rhyme>,</l>
        <l id="s3:l10" met="3" type="+-">Wilt s'Heeren// lof <rhyme label="b" type="f" corresp="#s3:l3">vermeeren</rhyme>,</l>
        <l id="s3:l11" met="2" type="-+">Malcander <rhyme label="b" type="f" corresp="#s3:l3">leeren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Want broeders, <rhyme label="a" type="m">ist</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Dat ghy vast blijft end' niet en <rhyme label="a" type="m" corresp="#s4:l1">mist</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">In't verstant Christi, reyn van <rhyme label="b" type="f">zeden</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">Ghy sult van <rhyme label="a" type="m" corresp="#s4:l1">twist</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Wel leven <rhyme label="c" type="m">onghestoort</rhyme>,</l>
        <l id="s4:l6" met="2" type="-+">Haet baert <rhyme label="c" type="m" corresp="#s4:l5">discoort</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">End' haet comt uyt onverstandt <rhyme label="c" type="m" corresp="#s4:l5">voort</rhyme>,</l>
        <l id="s4:l8" met="2" type="-+">Maer daer men <rhyme label="c" type="m" corresp="#s4:l5">hoort</rhyme>,</l>
        <l id="s4:l9" met="4" type="-+">Verstaet, en doet des Heeren <rhyme label="c" type="m" corresp="#s4:l5">woordt</rhyme>,</l>
        <l id="s4:l10" met="3" type="+-">Daer treden// de <rhyme label="b" type="f" corresp="#s4:l3">leden</rhyme>,</l>
        <l id="s4:l11" met="2" type="-+">T'samen in <rhyme label="b" type="f" corresp="#s4:l3">vreden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Prins, <rhyme label="a" type="m">altemet</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Als daer is een erghelijck <rhyme label="a" type="m" corresp="#s5:l1">let</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Des Heeren Wet// leert dat af <rhyme label="b" type="f">snijden</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">Dat suyvert <rhyme label="a" type="m" corresp="#s5:l1">net</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Blijve t'gheheele <rhyme label="c" type="m">lijf</rhyme>,</l>
        <l id="s5:l6" met="2" type="-+">Dus Man oft <rhyme label="c" type="m" corresp="#s5:l5">Wijf</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Ghy die nu zijt van't <rhyme label="c" type="m" corresp="#s5:l5">overblijf</rhyme>,</l>
        <l id="s5:l8" met="2" type="-+">Houdt aen seer <rhyme label="c" type="m" corresp="#s5:l5">stijf</rhyme>,</l>
        <l id="s5:l9" met="4" type="-+">Al ist verdriet oft <rhyme label="c" type="m" corresp="#s5:l5">ongherijf</rhyme>,</l>
        <l id="s5:l10" met="3" type="+-">Nae lijden// comt <rhyme label="b" type="f" corresp="#s5:l3">verblijden</rhyme>,</l>
        <l id="s5:l11" met="2" type="-+">Voor die vroom <rhyme label="b" type="f" corresp="#s5:l3">strijden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HEt spreeckt wel der Onwijsen <rhyme label="a" type="m">mont</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Den rechten GOdt wy <rhyme label="b" type="f">meynen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Maer Ong'loof is haers herten <rhyme label="a" type="m" corresp="#s1:l1">gront</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Gaen hem altijt <rhyme label="b" type="f" corresp="#s1:l2">vercleynen</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Haer wesen is verdorven <rhyme label="c" type="m">gaer</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Voor Godt ist eenen grouwel <rhyme label="c" type="m" corresp="#s1:l5">swaer</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Niemant doet goet van <rhyme label="d" type="f">allen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Godt sach van Hemel selfs her <rhyme label="a" type="m">af</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Op alle Menschen <rhyme label="b" type="f">Kind'ren</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Om haer t'aenschouwen hem <rhyme label="a" type="m" corresp="#s2:l1">begaf</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Oft hy yemandt soud <rhyme label="b" type="f" corresp="#s2:l2">vinden</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Die syn verstant doch hadd' <rhyme label="c" type="m">gheset</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Te leven recht nae Godes <rhyme label="c" type="m" corresp="#s2:l5">Wet</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">End vraechd' nae synen <rhyme label="d" type="f">wille</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Maer niemant was op rechter <rhyme label="a" type="m">baen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Sy waren all' aff <rhyme label="b" type="f">treden</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Een yeder ginck nae synen <rhyme label="a" type="m" corresp="#s3:l1">waen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">End' hielden vreemde <rhyme label="b" type="f" corresp="#s3:l2">Zeden</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Het deed' niemant voor Godt geen <rhyme label="c" type="m">goet</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Hoe wel seer veel bedrooch de <rhyme label="c" type="m" corresp="#s3:l5">Moet</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Haer doen mocht hem <rhyme label="d" type="f">mishaghen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Hoe langh' willen Onwetend' <rhyme label="a" type="m">syn</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Die sulcke Moeyt' op <rhyme label="b" type="f">laden</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Verslinden noch daer voor t'Volck <rhyme label="a" type="m" corresp="#s4:l1">mijn</rhyme></l>
        <l id="s4:l4" met="3" type="-+">End' leven van haer <rhyme label="b" type="f" corresp="#s4:l2">schaden</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Haer Hoop en staet doch niet op <rhyme label="c" type="m">Godt</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Sy roepen hem niet in der <rhyme label="c" type="m" corresp="#s4:l5">Noot</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Maer willen al selfs <rhyme label="d" type="f">versorghen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Dies mach haer Hert syn nimmer <rhyme label="a" type="m">stil</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Maer moet altijdt <rhyme label="b" type="f">beroeren</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Godt by den Vromen blijven <rhyme label="a" type="m" corresp="#s5:l1">wil</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Die hem geloovich <rhyme label="b" type="f" corresp="#s5:l2">hooren</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Maer ghy versmaet des Armen <rhyme label="c" type="m">Raet</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Beschimpt hem als hy seggen <rhyme label="c" type="m" corresp="#s5:l5">gaet</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Dat Godt syn Troost is <rhyme label="d" type="f">worden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Wie sal Israel den <rhyme label="a" type="m">Armen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Tot Zyon Heyl <rhyme label="b" type="f">erlangen</rhyme>?</l>
        <l id="s6:l3" met="4" type="-+">Godt sal hem zijns Volcks <rhyme label="a" type="m" corresp="#s6:l1">Erbarmen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Verlossen die <rhyme label="b" type="f" corresp="#s6:l2">Ghevangen</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Dat sal hy doen door synen <rhyme label="c" type="m">Soon</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Daer van heeft Jacob Vreuchde <rhyme label="c" type="m" corresp="#s6:l5">schoon</rhyme></l>
        <l id="s6:l7" met="3" type="-+">End' Israel is <rhyme label="d" type="f">blijde</rhyme>.</l>
      </lg>
    </lg>
  </text>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="6" type="+-">COmt Menschen, Volcken uyt Natien al t' <rhyme label="a" type="m">saem</rhyme>,</l>
        <l id="s1:l2" met="5" type="-+">Danckt Jesum Christum met my in 't <rhyme label="b" type="m">ghemeyn</rhyme>,</l>
        <l id="s1:l3" met="6" type="+-">Syn Geest, leert ons, 't gheloof in Syn, en <rhyme label="a" type="m" corresp="#s1:l1">Godts-Naem</rhyme>,</l>
        <l id="s1:l4" met="5" type="-+">Looft met my Hem, en Godt met Lofsanck <rhyme label="b" type="m" corresp="#s1:l2">reyn</rhyme>,</l>
        <l id="s1:l5" met="6" type="+-">Voor 't gheloof, 't welck ons in 't eeuwich leven <rhyme label="c" type="m">leyt</rhyme>,</l>
        <l id="s1:l6" met="5" type="-+">Haers Heerlickheyt, eeren soo Eng'lens <rhyme label="b" type="m" corresp="#s1:l2">treyn</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="6" type="+-">Met haer leert onderscheyden Godt, en Syn <rhyme label="a" type="m">Cracht</rhyme>,</l>
        <l id="s2:l2" met="5" type="-+">Door sulcks onderscheydingh'kendt in het <rhyme label="b" type="m">rondt</rhyme>.</l>
        <l id="s2:l3" met="6" type="+-">U Scheppers, uws selfs Scheppingh', neemt dat in <rhyme label="a" type="m" corresp="#s2:l1">acht</rhyme>,</l>
        <l id="s2:l4" met="5" type="-+">Want Christi Geest door Paulo dat <rhyme label="b" type="m" corresp="#s2:l2">vermont</rhyme>,</l>
        <l id="s2:l5" met="6" type="+-">Soo door Godts Geest het eeuwich leven <rhyme label="c" type="m">verbeyt</rhyme>,</l>
        <l id="s2:l6" met="5" type="-+">David door sulcks kennis de Hemel <rhyme label="b" type="m" corresp="#s2:l2">vondt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="6" type="+-">Aenmerckt Godt te zyn, Een Heylich Wesen <rhyme label="a" type="m">Een</rhyme>,</l>
        <l id="s3:l2" met="5" type="-+">Door Drie Selfs-standen, Vader, Woordt, en <rhyme label="b" type="m">Geest</rhyme>,</l>
        <l id="s3:l3" met="6" type="+-">Weses leven, die Godt, sy doch aengebeen, <rhyme label="a" type="m" corresp="#s3:l1">Deuter</rhyme>.</l>
        <l id="s3:l4" met="5" type="-+">Geen ander Goden kent, Die is <rhyme label="b" type="m" corresp="#s3:l2">gheweest</rhyme>,</l>
        <l id="s3:l5" met="6" type="+-">Altijt in Ontoegancklick Licht <rhyme label="c" type="m">woonachtich</rhyme>,</l>
        <l id="s3:l6" met="5" type="-+">Als Paulus leert, dat te gelooven <rhyme label="b" type="m" corresp="#s3:l2">leest</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="6" type="+-">Uyt welck Licht, sulcke Godts Dryheyts <rhyme label="a" type="m">Heerlickheyt</rhyme></l>
        <l id="s4:l2" met="5" type="-+">Spreyt, die Mensch' Godts Wesen Een sien <rhyme label="b" type="m">belet</rhyme>,</l>
        <l id="s4:l3" met="6" type="+-">Die 't Wesen Godts van der menschens Wesen <rhyme label="a" type="m" corresp="#s4:l1">scheyt</rhyme>,</l>
        <l id="s4:l4" met="5" type="-+">Want Godts Evangelium, ende <rhyme label="b" type="m" corresp="#s4:l2">Wet</rhyme>,</l>
        <l id="s4:l5" met="6" type="+-">Godt self, oft Persoonen te woonen in <rhyme label="c" type="m">ons</rhyme>,</l>
        <l id="s4:l6" met="5" type="-+">Door Godts Dryheyts Heerlikheyt, dat <rhyme label="b" type="m" corresp="#s4:l2">verset</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="6" type="+-">Want des Heeres Wet seer goet, dat selfs ons <rhyme label="a" type="m">leert</rhyme>,</l>
        <l id="s5:l2" met="5" type="-+">Als in Exodo drie-en-dertich <rhyme label="b" type="m">staet</rhyme>,</l>
        <l id="s5:l3" met="6" type="+-">Dat Godt de Schepper, wil van ons syn <rhyme label="a" type="m" corresp="#s5:l1">geeert</rhyme>,</l>
        <l id="s5:l4" met="5" type="-+">Dat niemant Syn Aensicht met kennis <rhyme label="b" type="m" corresp="#s5:l2">vaet</rhyme>,</l>
        <l id="s5:l5" met="6" type="+-">Want syn Godes Heerlickheyt, seyt sulck <rhyme label="c" type="m">belet</rhyme>,</l>
        <l id="s5:l6" met="5" type="-+">Want naerder van syn Aensicht, hy doot <rhyme label="b" type="m" corresp="#s5:l2">slaet</rhyme>.</l>
      </lg>
    </lg>
  </text>

  <author>Hendrik Rintjes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Nu seght het Oude-Iaer <rhyme label="a" type="m">adieu</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Want ‘t is in Christo alles <rhyme label="a" type="m" corresp="#s1:l1">Nieu</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">De streneghe Moyses derft sijn <rhyme label="b" type="f">klaerheyt</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Hier schijnt ghenad’en enckel <rhyme label="b" type="f" corresp="#s1:l3">waerheyt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">‘t Is nu de dach der <rhyme label="a" type="m">zaligheyt</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Die Godt sijn Volck heeft <rhyme label="a" type="m" corresp="#s2:l1">toe-gheseyt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">’t Iaer der verlossingh is <rhyme label="b" type="f">ghekomen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Feesteert, en juicht ghy Christen <rhyme label="b" type="f" corresp="#s2:l3">vromen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Men Predickt en basuynt <rhyme label="a" type="m">alom</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Het troostrijck <rhyme label="a" type="m" corresp="#s3:l1">Evangelium</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Der zonden duyst’ren <rhyme label="b" type="f">zielen-Kercker</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Is overweldight van een <rhyme label="b" type="f" corresp="#s3:l3">stercker</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Des herten ooren open <rhyme label="a" type="m">sluyt</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">En gaet het rijck des Duyvels <rhyme label="a" type="m" corresp="#s4:l1">uyt</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Treckt uyt (wie lust te zijn <rhyme label="b" type="f">ontbonden</rhyme>)</l>
        <l id="s4:l4" met="4" type="-+">Den rock des vleeschs en ‘t juck der <rhyme label="b" type="f" corresp="#s4:l3">zonden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Want siet, in Christo gelt <rhyme label="a" type="m">ghewis</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Noch voor-huyt noch <rhyme label="a" type="m" corresp="#s5:l1">besnijdenis</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Maer een vernieut gemoet <rhyme label="b" type="f">waerachtigh</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">En sterck gheloof door liefde <rhyme label="b" type="f" corresp="#s5:l3">krachtigh</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Besnijt dan ‘t vleesch niet, maer u <rhyme label="a" type="m">hert</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">En een verborghen Iode <rhyme label="a" type="m" corresp="#s6:l1">wert</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Den Geest kiest voor de doode <rhyme label="b" type="f">letter</rhyme>:</l>
        <l id="s6:l4" met="4" type="-+">En leeftn hoe langhs hoe <rhyme label="b" type="f" corresp="#s6:l3">onbesmetter</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Hier toe Godts een-gheboren <rhyme label="a" type="m">Soon</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">U streckt een levendigh <rhyme label="a" type="m" corresp="#s7:l1">patroon</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Hierom heeft Christus vroegh <rhyme label="b" type="f">gheleden</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">En is op achtste dagh <rhyme label="b" type="f" corresp="#s7:l3">besneden</rhyme></l>
      </lg>
    </lg>
  </text>
</song>

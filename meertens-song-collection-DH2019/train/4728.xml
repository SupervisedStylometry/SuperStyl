    <melody>J'aimerai en ce village</melody>
  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">WAt maekt ons <rhyme label="a" type="f">Rechtvaerdig</rhyme>?</l>
        <l id="s1:l2" met="3" type="+-">Niet dan Goods <rhyme label="b" type="m">gena</rhyme></l>
        <l id="s1:l3" met="3" type="+-">Des hy <rhyme label="a" type="f" corresp="#s1:l1">overwaerdig</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">Van ons vroeg en <rhyme label="b" type="m" corresp="#s1:l2">spa</rhyme></l>
        <l id="s1:l5" met="3" type="+-">Is gelooft te <rhyme label="c" type="f">werden</rhyme></l>
        <l id="s1:l6" met="4" type="+-">En gebeden <rhyme label="d" type="m">niet-temin</rhyme></l>
        <l id="s1:l7" met="3" type="+-">Dat hy ons <rhyme label="c" type="f" corresp="#s1:l5">volharden</rhyme></l>
        <l id="s1:l8" met="4" type="+-">Doe by d’ingegeve <rhyme label="d" type="m" corresp="#s1:l6">zin</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Wat sijn dan de <rhyme label="a" type="f">werken</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">Die Goods trouwe <rhyme label="b" type="m">knecht</rhyme></l>
        <l id="s2:l3" met="3" type="+-">Iacob, ons doed <rhyme label="a" type="f" corresp="#s2:l1">merken</rhyme></l>
        <l id="s2:l4" met="3" type="+-">Dat de zielen <rhyme label="b" type="m" corresp="#s2:l2">recht</rhyme></l>
        <l id="s2:l5" met="3" type="+-">En Godvruchtig <rhyme label="c" type="f">maken</rhyme>?</l>
        <l id="s2:l6" met="4" type="+-">Want daer niet dan gracy <rhyme label="d" type="m">is</rhyme></l>
        <l id="s2:l7" met="3" type="+-">’t Eerst en ’t lest der <rhyme label="c" type="f" corresp="#s2:l5">zaken</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Daer gaen alle werken <rhyme label="d" type="m" corresp="#s2:l6">mis</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">‘k Zal de vrag <rhyme label="a" type="f">verklaren</rhyme>:</l>
        <l id="s3:l2" met="3" type="+-">Als wy spreken <rhyme label="b" type="m">van</rhyme></l>
        <l id="s3:l3" met="3" type="+-">d’ Aenvang der <rhyme label="a" type="f" corresp="#s3:l1">zondaren</rhyme>;</l>
        <l id="s3:l4" met="3" type="+-">Zeker zoo en <rhyme label="b" type="m" corresp="#s3:l2">kan</rhyme></l>
        <l id="s3:l5" met="3" type="+-">Daer niet dan <rhyme label="c" type="f">genade</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Wezen, want een vyand <rhyme label="d" type="m">Goods</rhyme>,</l>
        <l id="s3:l7" met="3" type="+-">Nae zoo veel mis <rhyme label="c" type="f" corresp="#s3:l5">daden</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Is niet dan een kind des <rhyme label="d" type="m" corresp="#s3:l6">doods</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">Maer, nae dat den <rhyme label="a" type="f">zegen</rhyme></l>
        <l id="s4:l2" met="3" type="+-">Godes heeft <rhyme label="b" type="m">gerecht</rhyme></l>
        <l id="s4:l3" met="3" type="+-">d’ Averekse <rhyme label="a" type="f" corresp="#s4:l1">wegen</rhyme></l>
        <l id="s4:l4" met="3" type="+-">Van d’onvroede <rhyme label="b" type="m" corresp="#s4:l2">knecht</rhyme>,</l>
        <l id="s4:l5" met="3" type="+-">Kan hy deur goe <rhyme label="c" type="f">werken</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Nae Iacobus wijs <rhyme label="d" type="m">vermaen</rhyme>,</l>
        <l id="s4:l7" met="3" type="+-">d’Eerste gaef <rhyme label="c" type="f" corresp="#s4:l5">versterken</rhyme>:</l>
        <l id="s4:l8" met="4" type="+-">End’ in deugden nemen <rhyme label="d" type="m" corresp="#s4:l6">aen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="+-">Zoo dat wy <rhyme label="a" type="f">midsdezen</rhyme></l>
        <l id="s5:l2" met="3" type="+-">Claer en wel <rhyme label="b" type="m">ghewis</rhyme></l>
        <l id="s5:l3" met="3" type="+-">Ter Schriftuiren <rhyme label="a" type="f" corresp="#s5:l1">lezen</rhyme>:</l>
        <l id="s5:l4" met="3" type="+-">Die rechtvaerdig <rhyme label="b" type="m" corresp="#s5:l2">is</rhyme>,</l>
        <l id="s5:l5" met="3" type="+-">Arbey op te <rhyme label="c" type="f">stijgen</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Daeg’lijks noch tot hoger <rhyme label="d" type="m">graed</rhyme>:</l>
        <l id="s5:l7" met="3" type="+-">Om te mogen <rhyme label="c" type="f" corresp="#s5:l5">krijgen</rhyme></l>
        <l id="s5:l8" met="4" type="+-">Een gewisse <rhyme label="d" type="m" corresp="#s5:l6">overmaet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>182569</id>
    <date>
      <year-start>1800</year-start>
      <year-end>1800</year-end>
    </date>
    <tags/>
    <melody>Schep vreugde in het leven</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">Wat aardige <rhyme label="a" type="f">tyden</rhyme>,</l>
        <l id="s1:l2" met="2" type="+-">Zien wy heden met <rhyme label="b" type="m">plaizier</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Veel Jonkmans <rhyme label="a" type="f" corresp="#s1:l1">vryden</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Door minnen <rhyme label="b" type="m" corresp="#s1:l2">vuur</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Men ziet hen loopen dag en <rhyme label="c" type="m">nagt</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Met 't hert vol Listen en <rhyme label="c" type="m" corresp="#s1:l5">bedrog</rhyme>;</l>
        <l id="s1:l7" met="4" type="-+">Zy gaane altyd op de <rhyme label="d" type="m">Loer</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Om Dochters te <rhyme label="e" type="f">bedriegen</rhyme>,</l>
        <l id="s1:l9" met="5" type="-+">Al incroijabel daar zy na de mode <rhyme label="f" type="m">gaan</rhyme></l>
        <l id="s1:l10" met="5" type="-+">Lugt en compabel staan de Mysjes <rhyme label="f" type="m" corresp="#s1:l9">aan</rhyme>,</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Ziet onzen <rhyme label="a" type="f">steven</rhyme>,</l>
        <l id="s2:l2" met="2" type="+-">Hy draagt ook een dikken <rhyme label="b" type="m">doek</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Als hy iets moet <rhyme label="a" type="f" corresp="#s2:l1">geven</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Dan is zyn beursie <rhyme label="b" type="m" corresp="#s2:l2">zoek</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Daar op heeft hy een kleetje <rhyme label="c" type="m">aan</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Om met de wind voor uit te <rhyme label="c" type="m" corresp="#s2:l5">gaan</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Gestreepten kousen na de <rhyme label="d" type="m">trant</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">En schoenen met lange <rhyme label="e" type="f">tippen</rhyme>.</l>
        <l id="s2:l9" met="5" type="-+">Als incroijabel draagt hy ook de nieuwe <rhyme label="f" type="m">zwier</rhyme>,</l>
        <l id="s2:l10" met="5" type="-+">Lugt en compabel sterker als <rhyme label="f" type="m" corresp="#s2:l9">papier</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Kyk hy rys <rhyme label="a" type="f">loopen</rhyme>,</l>
        <l id="s3:l2" met="2" type="+-">'t staat hem alles even <rhyme label="b" type="m">net</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Hy moet ook <rhyme label="a" type="f" corresp="#s3:l1">maken</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Dat men op hem <rhyme label="b" type="m" corresp="#s3:l2">let</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Hy loopt of gaat na de <rhyme label="c" type="m">dans</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">En in zyn zak is wynig <rhyme label="c" type="m" corresp="#s3:l5">kans</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Zyn ooren die zyn rontom <rhyme label="d" type="m">kaal</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Het haar hem <rhyme label="e" type="f">osgesneeden</rhyme>,</l>
        <l id="s3:l9" met="5" type="-+">Als incroiabel beeft hy somtys van de <rhyme label="f" type="m">kou</rhyme></l>
        <l id="s3:l10" met="5" type="-+">Lugt en compabel is hy rap en <rhyme label="f" type="m" corresp="#s3:l9">gou</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Dogters wilt <rhyme label="a" type="f">leren</rhyme>,</l>
        <l id="s4:l2" met="2" type="+-">Die tot liefde zyt <rhyme label="b" type="m">gezind</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Schuwd zulke <rhyme label="a" type="f" corresp="#s4:l1">heeren</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Meid u voor de <rhyme label="b" type="m" corresp="#s4:l2">wint</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Neemt liever eenen boer van 't <rhyme label="c" type="m">lant</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Als een zo incroiabel <rhyme label="c" type="m" corresp="#s4:l5">kwant</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Want als g' met hem zyt <rhyme label="d" type="m">getrouwt</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Moet gy ligte kleeren <rhyme label="e" type="f">draagen</rhyme>,</l>
        <l id="s4:l9" met="5" type="-+">Al incroiabel na de lust en nieuwen <rhyme label="f" type="m">zin</rhyme></l>
        <l id="s4:l10" met="5" type="-+">Lugt en conpabel al waaren der scheuren <rhyme label="f" type="m" corresp="#s4:l9">in</rhyme>,</l>
      </lg>
    </lg>
  </text>
</song>

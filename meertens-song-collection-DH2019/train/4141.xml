<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>4141</id>
    <date>
      <year-start>1650</year-start>
      <year-end>1650</year-end>
    </date>
    <location>
      <orginal-name>amsterdam</orginal-name>
      <standard-name>Amsterdam, The Netherlands</standard-name>
      <coordinates>
        <lon>52.3745403</lon>
        <lat>4.89797550561798</lat>
      </coordinates>
    </location>
    <tags/>
    <melody>Kom Venus uit uw hoge troon</melody>
  <author>Jacob Steendam</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">BEschreyd u <rhyme label="a" type="f">sonden</rhyme></l>
        <l id="s1:l2" met="2" type="+-">Gy mijn <rhyme label="b" type="m">hart</rhyme>:</l>
        <l id="s1:l3" met="2" type="-+">Om-helsd de <rhyme label="a" type="f" corresp="#s1:l1">wonden</rhyme>,</l>
        <l id="s1:l4" met="2" type="+-">Dood, en <rhyme label="b" type="m" corresp="#s1:l2">smart</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Van 's werelds <rhyme label="c" type="f">Saligh-maker</rhyme>:</l>
        <l id="s1:l6" met="3" type="-+">Verwinnaar, van de <rhyme label="d" type="m">dood</rhyme>:</l>
        <l id="s1:l7" met="3" type="+-">Een <rhyme label="c" type="f" corresp="#s1:l5">getrouwe-waker</rhyme>,</l>
        <l id="s1:l8" met="2" type="+-">In u <rhyme label="d" type="m" corresp="#s1:l6">nood</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Gy moet u <rhyme label="a" type="f">schamen</rhyme></l>
        <l id="s2:l2" met="2" type="+-">Voor den <rhyme label="b" type="m">dach</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">De Son (by <rhyme label="a" type="f" corresp="#s2:l1">namen</rhyme></l>
        <l id="s2:l4" met="2" type="+-">Die het <rhyme label="b" type="m" corresp="#s2:l2">sach</rhyme>)</l>
        <l id="s2:l5" met="3" type="-+">Sal u thans <rhyme label="c" type="f">over-tuygen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Van schande, van <rhyme label="d" type="m">on-eer</rhyme>:</l>
        <l id="s2:l7" met="3" type="+-">Daarom wild u <rhyme label="c" type="f" corresp="#s2:l5">buygen</rhyme>,</l>
        <l id="s2:l8" met="2" type="+-">Voor God <rhyme label="d" type="m" corresp="#s2:l6">neer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Mits hy 't <rhyme label="a" type="f">verslagen</rhyme></l>
        <l id="s3:l2" met="2" type="+-">Hart, <rhyme label="b" type="m">an-siet</rhyme>:</l>
        <l id="s3:l3" met="2" type="-+">En dat (in <rhyme label="a" type="f" corresp="#s3:l1">plagen</rhyme>)</l>
        <l id="s3:l4" met="2" type="+-">Noyt <rhyme label="b" type="m" corresp="#s3:l2">verstiet</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Een Geest vol angst, en <rhyme label="c" type="f">vresen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Is 't rechte <rhyme label="d" type="m">offerhand'</rhyme>:</l>
        <l id="s3:l7" met="3" type="+-">En sal (voor hem) <rhyme label="c" type="f" corresp="#s3:l5">wesen</rhyme></l>
        <l id="s3:l8" met="2" type="+-">d' Hoogste <rhyme label="d" type="m" corresp="#s3:l6">brand'</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Ik koom dan <rhyme label="a" type="f">heden</rhyme></l>
        <l id="s4:l2" met="2" type="+-">(Heer) tot <rhyme label="b" type="m">u</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">Met mijn <rhyme label="a" type="f" corresp="#s4:l1">gebeden</rhyme>:</l>
        <l id="s4:l4" met="2" type="+-">Hoord my <rhyme label="b" type="m" corresp="#s4:l2">nu</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Ik ben (ô! God) te <rhyme label="c" type="f">snode</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Op uwe hulp te <rhyme label="d" type="m">sien</rhyme>:</l>
        <l id="s4:l7" met="3" type="+-">En ik heb van <rhyme label="c" type="f" corresp="#s4:l5">node</rhyme></l>
        <l id="s4:l8" met="2" type="+-">U te <rhyme label="d" type="m" corresp="#s4:l6">vliên</rhyme>:</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Want u <rhyme label="a" type="f">geboden</rhyme></l>
        <l id="s5:l2" met="2" type="+-">(Goed <rhyme label="b" type="m">bekend</rhyme>)</l>
        <l id="s5:l3" met="2" type="-+">Heb ik <rhyme label="a" type="f" corresp="#s5:l1">gevloden</rhyme>,</l>
        <l id="s5:l4" met="2" type="+-">Ia <rhyme label="b" type="m" corresp="#s5:l2">geschend</rhyme>:</l>
        <l id="s5:l5" met="3" type="-+">Self met gedacht, en <rhyme label="c" type="f">woorden</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">En doen, en laten <rhyme label="d" type="m">mee</rhyme>,</l>
        <l id="s5:l7" met="3" type="+-">Als men my <rhyme label="c" type="f" corresp="#s5:l5">bekoorden</rhyme></l>
        <l id="s5:l8" met="2" type="+-">'t Elken <rhyme label="d" type="m" corresp="#s5:l6">stee</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Wild gonstig, <rhyme label="a" type="f">dekken</rhyme></l>
        <l id="s6:l2" met="2" type="+-">Dese <rhyme label="b" type="m">schand</rhyme>,</l>
        <l id="s6:l3" met="2" type="-+">En <rhyme label="a" type="f" corresp="#s6:l1">vuyle-vlekken</rhyme>,</l>
        <l id="s6:l4" met="2" type="+-">Met u <rhyme label="b" type="m" corresp="#s6:l2">hand</rhyme>:</l>
        <l id="s6:l5" met="3" type="-+">Wild nimmer-meer <rhyme label="c" type="f">gedenken</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Mijn sonden, groot, en <rhyme label="d" type="m">veel</rhyme>:</l>
        <l id="s6:l7" met="3" type="+-">Maar (uyt liefde) <rhyme label="c" type="f" corresp="#s6:l5">schenken</rhyme></l>
        <l id="s6:l8" met="2" type="+-">'t <rhyme label="d" type="m" corresp="#s6:l6">Beste-deel</rhyme>:</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="2" type="-+">Om Christi <rhyme label="a" type="f">waarde</rhyme>,</l>
        <l id="s7:l2" met="2" type="+-">Dood, en <rhyme label="b" type="m">graf</rhyme>:</l>
        <l id="s7:l3" met="2" type="-+">Die uyt de <rhyme label="a" type="f" corresp="#s7:l1">aarde</rhyme></l>
        <l id="s7:l4" met="2" type="+-">Sich <rhyme label="b" type="m" corresp="#s7:l2">begaf</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Tot door de <rhyme label="c" type="f">hoogste-wolken</rhyme>:</l>
        <l id="s7:l6" met="3" type="-+">Want (Heer) mijn hart <rhyme label="d" type="m">geloofd</rhyme></l>
        <l id="s7:l7" met="3" type="+-">
          <rhyme label="c" type="f" corresp="#s7:l5">D'onder-aard'sche-kolken</rhyme>
        </l>
        <l id="s7:l8" met="2" type="+-">Zijn <rhyme label="d" type="m" corresp="#s7:l6">beroofd</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="2" type="-+">Weest my <rhyme label="a" type="f">genadig</rhyme>,</l>
        <l id="s8:l2" met="2" type="+-">Neemt in <rhyme label="b" type="m">acht</rhyme>,</l>
        <l id="s8:l3" met="2" type="-+">Die <rhyme label="a" type="f" corresp="#s8:l1">(onversadig</rhyme>)</l>
        <l id="s8:l4" met="2" type="+-">Na u <rhyme label="b" type="m" corresp="#s8:l2">wacht</rhyme>.</l>
        <l id="s8:l5" met="3" type="-+">U woorden seer <rhyme label="c" type="f">lieftalig</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Bevesten my <rhyme label="d" type="m">(gewis</rhyme>)</l>
        <l id="s8:l7" met="3" type="+-">Dat mijn ziele <rhyme label="c" type="f" corresp="#s8:l5">salig</rhyme></l>
        <l id="s8:l8" met="2" type="+-">Door u <rhyme label="d" type="m" corresp="#s8:l6">is</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

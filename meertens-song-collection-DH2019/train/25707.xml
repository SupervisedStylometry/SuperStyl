  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Tot u heb ick <rhyme label="a" type="f">opgheheven</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Heer, mijn hert en mijn <rhyme label="b" type="m">ghemoedt</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Schand’ en laet my niet <rhyme label="a" type="f" corresp="#s1:l1">omgheven</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Mijner zonden <rhyme label="b" type="m" corresp="#s1:l2">overvloedt</rhyme>:</l>
        <l id="s1:l5" met="4" type="+-">Maer deur Christum uwen <rhyme label="c" type="m">Soon</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Vergheef my al mijn <rhyme label="d" type="f">misdaden</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Wilt my recht bekeeren <rhyme label="c" type="m" corresp="#s1:l5">schoon</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">En aennemen uyt <rhyme label="d" type="f" corresp="#s1:l6">ghenaden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Maeckt my gheleert in u <rhyme label="a" type="f">zeden</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Om u weghen wel te <rhyme label="b" type="m">gaen</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Den smallen padt recht te <rhyme label="a" type="f" corresp="#s2:l1">treden</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">V waerheyt leert my <rhyme label="b" type="m" corresp="#s2:l2">voortaen</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Naer uwe <rhyme label="c" type="m">barmherticheyt</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Regeert al mijn doen en <rhyme label="d" type="f">laten</rhyme></l>
        <l id="s2:l7" met="4" type="+-">Deur u goetheyt (wijdt <rhyme label="c" type="m" corresp="#s2:l5">verbreyt</rhyme>)</l>
        <l id="s2:l8" met="4" type="+-">Comt mijn elende te <rhyme label="d" type="f" corresp="#s2:l6">baten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Seght, die vervolghen mijn <rhyme label="a" type="f">Ziele</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Datse moeten in den <rhyme label="b" type="m">grondt</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Deur Christum vrijdt ons <rhyme label="a" type="f" corresp="#s3:l1">ghehiele</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Van zonden los en <rhyme label="b" type="m" corresp="#s3:l2">ghesondt</rhyme></l>
        <l id="s3:l5" met="4" type="+-">Heel maeckt, en  salich, O <rhyme label="c" type="m">Godt</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">My u  handtwerck, cleyn van <rhyme label="d" type="f">crachten</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Ghy zijt mijn vastheyt, mijn <rhyme label="c" type="m" corresp="#s3:l5">slot</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Dit wy van u Heer <rhyme label="d" type="f" corresp="#s3:l6">verwachten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">In comen om te <rhyme label="a" type="f">belijden</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Nu uwen heerlijcken <rhyme label="b" type="m">Naem</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">In u wil ick seer <rhyme label="a" type="f" corresp="#s4:l1">verblijden</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Loven, dancken, naer <rhyme label="b" type="m" corresp="#s4:l2">t’betaem</rhyme>:</l>
        <l id="s4:l5" met="4" type="+-">Comt herwaerts ghy die daer  <rhyme label="c" type="m">smaeckt</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">De vriendelijckheyt des <rhyme label="d" type="f">Heeren</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Die soo lieflijck tot ons <rhyme label="c" type="m" corresp="#s4:l5">naeckt</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Helpt my sijn lof <rhyme label="d" type="f" corresp="#s4:l6">vermeeren</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Bringt danckoffer <rhyme label="a" type="f">uytghelesen</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Op sijnen heylghen <rhyme label="b" type="m">Outaer</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Sijnen Name moet zijn <rhyme label="a" type="f" corresp="#s5:l1">ghepresen</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Van sijnen kind’ren te <rhyme label="b" type="m" corresp="#s5:l2">gaer</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">O Heere, <rhyme label="c" type="m">ghebenedijdt</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Moet ghy zijn, ghy  Godt <rhyme label="d" type="f">almachtich</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Iae het gantsche Aerdrijck <rhyme label="c" type="m" corresp="#s5:l5">wijdt</rhyme></l>
        <l id="s5:l8" met="4" type="+-">Belijd’ u seer <rhyme label="d" type="f" corresp="#s5:l6">aendachtich</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">S’nachts wil ick my vroech op <rhyme label="a" type="f">maken</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">V te begheven <rhyme label="b" type="m">terstont</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">V bevelen al mijn <rhyme label="a" type="f" corresp="#s6:l1">saken</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Seven-mael met mijnen <rhyme label="b" type="m" corresp="#s6:l2">mondt</rhyme></l>
        <l id="s6:l5" met="4" type="+-">Sal ick u sdaeghs loven <rhyme label="c" type="m">fijn</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Daer toe wilt mijn Ziel  <rhyme label="d" type="f">bereyden</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">Dat ick met der tonghen <rhyme label="c" type="m" corresp="#s6:l5">mijn</rhyme></l>
        <l id="s6:l8" met="4" type="+-">V eer soo mach <rhyme label="d" type="f" corresp="#s6:l6">uytbreyden</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Van sÍaghers strick <rhyme label="a" type="f">opgehanghen</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Verlost mijn ziel, maecktse <rhyme label="b" type="m">vry</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Dat ick niet en word’ <rhyme label="a" type="f" corresp="#s7:l1">ghevanghen</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Tot aent eynde staet by <rhyme label="b" type="m" corresp="#s7:l2">my</rhyme>:</l>
        <l id="s7:l5" met="4" type="+-">Ick sal spreken van u <rhyme label="c" type="m">Wet</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Onderhouden u <rhyme label="d" type="f">bevelen</rhyme>,</l>
        <l id="s7:l7" met="4" type="+-">Vroech en laet sal mijn <rhyme label="c" type="m" corresp="#s7:l5">ghebedt</rhyme></l>
        <l id="s7:l8" met="4" type="+-">Met Lofsanghen voor u <rhyme label="d" type="f" corresp="#s7:l6">spelen</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Daelt, Heere, tot my, comt <rhyme label="a" type="f">beneden</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">En leydt my met uwer <rhyme label="b" type="m">handt</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Op den smallen wegh met <rhyme label="a" type="f" corresp="#s8:l1">vreden</rhyme></l>
        <l id="s8:l4" met="4" type="+-">Tot ick com’ int Hemels <rhyme label="b" type="m" corresp="#s8:l2">landt</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Slecht en recht behoedt my <rhyme label="c" type="m">doch</rhyme></l>
        <l id="s8:l6" met="4" type="+-">V toecomste te <rhyme label="d" type="f">verbeyden</rhyme></l>
        <l id="s8:l7" met="4" type="+-">Daerom bidden moet ick <rhyme label="c" type="m" corresp="#s8:l5">noch</rhyme>,</l>
        <l id="s8:l8" met="4" type="+-">Dancken u <rhyme label="d" type="f" corresp="#s8:l6">salicheyden</rhyme></l>
      </lg>
    </lg>
  </text>

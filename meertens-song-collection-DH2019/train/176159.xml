    <melody>Tien geboden</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Jacobus Revius</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HEft op u hert, ontsluyt u <rhyme label="a" type="f">ooren</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Ghy hert en traech volck int <rhyme label="b" type="m">verstaen</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Wilt uwes Godes stem <rhyme label="a" type="f" corresp="#s1:l1">aenhooren</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">En syn geboden gade <rhyme label="b" type="m" corresp="#s1:l2">slaen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ick ben, seyt hy, u God en <rhyme label="a" type="f">Heere</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Die u trock uyt de <rhyme label="b" type="m">slaverny</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Aen my alleen doet dienst en <rhyme label="a" type="f" corresp="#s2:l1">eere</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Hebt geenen God beneffens <rhyme label="b" type="m" corresp="#s2:l2">my</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Geen beelt laet snijden ofte <rhyme label="a" type="f">gieten</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Noch geenerley <rhyme label="b" type="m">gelijckenis</rhyme>.</l>
        <l id="s3:l3" met="4" type="-+">Soo ghyse eert, 'tsal God <rhyme label="a" type="f" corresp="#s3:l1">verdrieten</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Want hy jaloers en machtich <rhyme label="b" type="m" corresp="#s3:l2">is</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">In ydelheyt den naem des <rhyme label="a" type="f">Heeren</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Suldy niet nemen in den <rhyme label="b" type="m">mont</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Want die den selven sal <rhyme label="a" type="f" corresp="#s4:l1">onteeren</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">De Heer sal straffen syne <rhyme label="b" type="m" corresp="#s4:l2">sond'</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ses dagen werckt, en daer na <rhyme label="a" type="f">rustet</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Dat knecht en maecht oock vieren <rhyme label="b" type="m">mach</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Want God u Schepper heeft <rhyme label="a" type="f" corresp="#s5:l1">gelustet</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Te rusten op den selven <rhyme label="b" type="m" corresp="#s5:l2">dach</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Wilt vader ende moeder <rhyme label="a" type="f">eeren</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Op dat ghy lange jaren <rhyme label="b" type="m">leeft</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">En uwen voorspoet mach <rhyme label="a" type="f" corresp="#s6:l1">vermeeren</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Int lant dat u de Heere <rhyme label="b" type="m" corresp="#s6:l2">geeft</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Den dootslach suldy neerstich <rhyme label="a" type="f">mijden</rhyme>.</l>
        <l id="s7:l2" met="4" type="-+">Het houwelijck doch niet en <rhyme label="b" type="m">breeckt</rhyme>.</l>
        <l id="s7:l3" met="4" type="-+">Steelt niet, al most ghy armoe <rhyme label="a" type="f" corresp="#s7:l1">lijden</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Geen valsch getuygenis en <rhyme label="b" type="m" corresp="#s7:l2">spreeckt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Om te begeeren s'naesten <rhyme label="a" type="f">have</rhyme></l>
        <l id="s8:l2" met="4" type="-+">En laet u hert niet zijn <rhyme label="b" type="m">bekoort</rhyme>:</l>
        <l id="s8:l3" met="4" type="-+">Syn wijf, syn huys, syn vee, syn <rhyme label="a" type="f" corresp="#s8:l1">slave</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Of alles wat hem <rhyme label="b" type="m" corresp="#s8:l2">toebehoort</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">O God, u woort ons <rhyme label="a" type="f">voorgeschreven</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Luydt claerder als een fijn <rhyme label="b" type="m">metael</rhyme>:</l>
        <l id="s9:l3" met="4" type="-+">Geef ons 'tvermogen om te <rhyme label="a" type="f" corresp="#s9:l1">leven</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Na u geboden <rhyme label="b" type="m" corresp="#s9:l2">altemael</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

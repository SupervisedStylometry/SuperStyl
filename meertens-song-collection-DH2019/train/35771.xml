  <author>Albertus Buitendyck</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">SInt Michiel! Vroome <rhyme label="a" type="f">strijder</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Van Godes eer, en <rhyme label="b" type="m">volck</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Satan onse <rhyme label="a" type="f" corresp="#s1:l1">benijder</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Sluyt in de helsche <rhyme label="b" type="m" corresp="#s1:l2">kolck</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Verwint, verdrijft al de Ketters <rhyme label="c" type="m">macht</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">En weest onse <rhyme label="a" type="f" corresp="#s1:l1">verblijder</rhyme></l>
        <l id="s1:l7" met="3" type="-+">(Naest Godt) by dagh en <rhyme label="c" type="m" corresp="#s1:l5">nacht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Maeckt dat wy altijdt <rhyme label="a" type="f">blijven</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Lidtmaten van Godts <rhyme label="b" type="m">Kerck</rhyme>;</l>
        <l id="s2:l3" met="3" type="-+">In deughden al <rhyme label="a" type="f" corresp="#s2:l1">op-klijven</rhyme>:</l>
        <l id="s2:l4" met="3" type="-+">Dat yder van 't goedt <rhyme label="b" type="m" corresp="#s2:l2">werck</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Verbant, verjaeght d'ydel lof en <rhyme label="c" type="m">naem</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Om al 't quaedt te <rhyme label="a" type="f" corresp="#s2:l1">verdrijven</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Maeckt dat wy zijn <rhyme label="c" type="m" corresp="#s2:l5">bequam</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Maeckt dat wy na Goods <rhyme label="a" type="f">wetten</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Leven oprecht en <rhyme label="b" type="m">heel</rhyme>.</l>
        <l id="s3:l3" met="3" type="-+">De voort-gangh wilt <rhyme label="a" type="f" corresp="#s3:l1">beletten</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Van haet, twist en <rhyme label="b" type="m" corresp="#s3:l2">verscheel</rhyme>.</l>
        <l id="s3:l5" met="4" type="-+">En dat wy Goods <rhyme label="c" type="m">tegenwoordigheyt</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Noyt van ons hart <rhyme label="a" type="f" corresp="#s3:l1">versetten</rhyme>;</l>
        <l id="s3:l7" met="3" type="-+">Noch van ons oogh en <rhyme label="c" type="m" corresp="#s3:l5">scheydt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Pest, Oorlogh, sware <rhyme label="a" type="f">plagen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Wilt van ons Landt en <rhyme label="b" type="m">zee</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Verdrijven, en <rhyme label="a" type="f" corresp="#s4:l1">verjagen</rhyme>.</l>
        <l id="s4:l4" met="3" type="-+">Houdt ons in peys en <rhyme label="b" type="m" corresp="#s4:l2">vree</rhyme>.</l>
        <l id="s4:l5" met="4" type="-+">Sluyt, drijft van ons hart <rhyme label="c" type="m">d'hoovaerdigheydt</rhyme></l>
        <l id="s4:l6" met="3" type="-+">En dat wy alle <rhyme label="a" type="f" corresp="#s4:l1">dagen</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Soecken d' <rhyme label="c" type="m" corresp="#s4:l5">ootmoedigheydt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Dat wy altijdt <rhyme label="a" type="f">beminnen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Ons Godt en Al, en <rhyme label="b" type="m">Heer</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Met ziel, hart ende <rhyme label="a" type="f" corresp="#s5:l1">zinnen</rhyme>.</l>
        <l id="s5:l4" met="3" type="-+">Dat wy tot Godes <rhyme label="b" type="m" corresp="#s5:l2">eer</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Doen al onse wercken groot en <rhyme label="c" type="m">kleyn</rhyme>.</l>
        <l id="s5:l6" met="3" type="-+">Ons quae natuer <rhyme label="a" type="f" corresp="#s5:l1">verwinnen</rhyme>;</l>
        <l id="s5:l7" met="3" type="-+">En dat wy leven <rhyme label="c" type="m" corresp="#s5:l5">reyn</rhyme>:</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Als wy van d'aerde <rhyme label="a" type="f">scheyde</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Aerdts-Engel Sint <rhyme label="b" type="m">Michiel</rhyme>!</l>
        <l id="s6:l3" met="3" type="-+">Ey! wilt niet langh <rhyme label="a" type="f" corresp="#s6:l1">verbeyde</rhyme>;</l>
        <l id="s6:l4" met="3" type="-+">Maer neemt dan onse <rhyme label="b" type="m" corresp="#s6:l2">ziel</rhyme>;</l>
        <l id="s6:l5" met="4" type="-+">Tot 's Hemels vreught, tot Godes <rhyme label="c" type="m">aenschijn</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Wilt die brengen, en <rhyme label="a" type="f" corresp="#s6:l1">leyden</rhyme>;</l>
        <l id="s6:l7" met="3" type="-+">Al waer komt doodt noch <rhyme label="c" type="m" corresp="#s6:l5">pijn</rhyme>.</l>
      </lg>
    </lg>
  </text>

  <author>Frans de Cort</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">Bezweken, <rhyme label="a" type="f">bezweken</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Op 't Waterloosche <rhyme label="b" type="m">veld</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Is menig <rhyme label="c" type="f">Nederlander</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Naast Brit en Pruis een <rhyme label="d" type="m">held</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Gevallen, <rhyme label="a" type="f">gevallen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Het wapen in de <rhyme label="b" type="m">hand</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Al strijdend voor de <rhyme label="c" type="f">vrijheid</rhyme></l>
        <l id="s2:l4" met="3" type="-+">En voor het <rhyme label="d" type="m">vaderland</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Gesneuveld, <rhyme label="a" type="f">gesneuveld</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Besmeurd met bloed en <rhyme label="b" type="m">slijk</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Maar roepende <rhyme label="c" type="f">victorie</rhyme>!</l>
        <l id="s3:l4" met="3" type="-+">Geleund op 's vijands <rhyme label="d" type="m">lijk</rhyme>!</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Begraven, <rhyme label="a" type="f">begraven</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Is menig jonge <rhyme label="b" type="m">held</rhyme></l>
        <l id="s4:l3" met="3" type="-+">En menig grijze <rhyme label="c" type="f">krijger</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Op 't Waterloosche <rhyme label="d" type="m">veld</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Maar plechtig, maar <rhyme label="a" type="f">plechtig</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">In 'tzelfde graf als <rhyme label="b" type="m">zij</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Zoo werden diep <rhyme label="c" type="f">begraven</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Geweld en <rhyme label="d" type="m">dwinglandij</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">En zouden <rhyme label="a" type="f">verrijzen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Geweld en <rhyme label="b" type="m">dwinglandij</rhyme>...</l>
        <l id="s6:l3" met="3" type="-+">Zij worden <rhyme label="c" type="f">herbegraven</rhyme> -</l>
        <l id="s6:l4" met="3" type="-+">Desnoods met ons er <rhyme label="d" type="m">bij</rhyme>!</l>
      </lg>
    </lg>
  </text>
</song>

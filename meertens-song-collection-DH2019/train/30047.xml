  <author>Philips van Marnix van Sint Aldegonde</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Heer mijn hulp end mijn <rhyme label="a" type="m">ontset</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Ick schreye dagen ende <rhyme label="b" type="f">nachten</rhyme>.</l>
        <l id="s1:l3" met="4" type="-+">Laet voir dy comen mijne <rhyme label="b" type="f" corresp="#s1:l2">clachten</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">End mijn hertgrondelijck <rhyme label="a" type="m" corresp="#s1:l1">gebedt</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Neyg doch tot mijn geschrey dijn <rhyme label="c" type="f">ooren</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Om my genadich aen te <rhyme label="c" type="f" corresp="#s1:l5">hooren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Mijn siel is sat van <rhyme label="a" type="m">tegenspoet</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Mijn leven is schier onder <rhyme label="b" type="f">d'eirde</rhyme>.</l>
        <l id="s2:l3" met="4" type="-+">Ick ben geacht van minder <rhyme label="b" type="f" corresp="#s2:l2">weirde</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Dan diemen reeds ten grave <rhyme label="a" type="m" corresp="#s2:l1">doet</rhyme>:</l>
        <l id="s2:l5" met="4" type="-+">Oft als een man die sonder <rhyme label="c" type="f">crachten</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Moet van benautheyt gantz <rhyme label="c" type="f" corresp="#s2:l5">versmachten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ick ben gelijck een lichaem <rhyme label="a" type="m">doot</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Van alle kenniss' schier <rhyme label="b" type="f">begeven</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Als die vermoort, voorts naer hun <rhyme label="b" type="f" corresp="#s3:l2">leven</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Begraven liggen in een <rhyme label="a" type="m" corresp="#s3:l1">sloot</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Daer du niet eenmael wilst op <rhyme label="c" type="f">dencken</rhyme>:</l>
        <l id="s3:l6" met="4" type="-+">Want tsijn dijn handen diese <rhyme label="c" type="f" corresp="#s3:l5">crencken</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Du hebst my Heer, in eenen <rhyme label="a" type="m">put</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">In duysternis end doncker <rhyme label="b" type="f">gaten</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">End leeg' afgronden neer <rhyme label="b" type="f" corresp="#s4:l2">gelaten</rhyme>.</l>
        <l id="s4:l4" met="4" type="-+">End dijnen toirn op my <rhyme label="a" type="m" corresp="#s4:l1">geschudt</rhyme>:</l>
        <l id="s4:l5" met="4" type="-+">Du hebst my plat ter neer <rhyme label="c" type="f">geslagen</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Met al dijn golven ende <rhyme label="c" type="f" corresp="#s4:l5">vlagen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Du hebst van my vervreimt seer <rhyme label="a" type="m">wijt</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Mijn naeste vrienden ende <rhyme label="b" type="f">magen</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Du doetst mijn aensicht hun <rhyme label="b" type="f" corresp="#s5:l2">mishagen</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Met eenen grouwel end <rhyme label="a" type="m" corresp="#s5:l1">verwijt</rhyme>.</l>
        <l id="s5:l5" met="4" type="-+">Uyt desen ancxt, die thert my <rhyme label="c" type="f">sluyt</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">En can ick geensins raken <rhyme label="c" type="f" corresp="#s5:l5">uyt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Twelck my so swaer valt, dat my <rhyme label="a" type="m">d'oog</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Heel sprietelt ende truert van <rhyme label="b" type="f">smerten</rhyme>.</l>
        <l id="s6:l3" met="4" type="-+">Ick roep' dy daeglijcx aen van <rhyme label="b" type="f" corresp="#s6:l2">herten</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">End streck mijn handt tot dy <rhyme label="a" type="m" corresp="#s6:l1">omhoog</rhyme>.</l>
        <l id="s6:l5" met="4" type="-+">Wat wachtstu Heer? wilstdu doen <rhyme label="c" type="f">mercken</rhyme></l>
        <l id="s6:l6" met="4" type="-+">Aen dooden, dijne <rhyme label="c" type="f" corresp="#s6:l5">wonderwercken</rhyme>?</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Sal dan een lichaem rot, <rhyme label="a" type="m">opstaen</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Om dijnen naem te comen <rhyme label="b" type="f">loven</rhyme>?</l>
        <l id="s7:l3" met="4" type="-+">Oft die int graf sijn <rhyme label="b" type="f" corresp="#s7:l2">neergeschoven</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Van dijn genade doen <rhyme label="a" type="m" corresp="#s7:l1">vermaen</rhyme>?</l>
        <l id="s7:l5" met="4" type="-+">End die de doot eens heeft <rhyme label="c" type="f">verslonden</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Heer sullen die dijn trouw <rhyme label="c" type="f" corresp="#s7:l5">oorconden</rhyme>?</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Oft salmen inde <rhyme label="a" type="m">duysternis</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Dijn wonderdaden <rhyme label="b" type="f">openbaren</rhyme>?</l>
        <l id="s8:l3" met="4" type="-+">End dijn gerechtigheyt <rhyme label="b" type="f" corresp="#s8:l2">verklaren</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Int landt daert al vergeten <rhyme label="a" type="m" corresp="#s8:l1">is</rhyme>?</l>
        <l id="s8:l5" met="4" type="-+">Doch Heer, ick schrey end koim <rhyme label="c" type="f">getreden</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Tot dy heel vroech met mijn <rhyme label="c" type="f" corresp="#s8:l5">gebeden</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Waerom verstootstu my so <rhyme label="a" type="m">straf</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">End houdst dijn aengesicht <rhyme label="b" type="f">verborgen</rhyme>?</l>
        <l id="s9:l3" met="4" type="-+">Ick steeck vol commers ende <rhyme label="b" type="f" corresp="#s9:l2">sorgen</rhyme>.</l>
        <l id="s9:l4" met="4" type="-+">End sterf van mijner jeuget <rhyme label="a" type="m" corresp="#s9:l1">af</rhyme>:</l>
        <l id="s9:l5" met="4" type="-+">Ick draeg dijn schricking' die my <rhyme label="c" type="f">crencken</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">End maecken my groot <rhyme label="c" type="f" corresp="#s9:l5">achterdencken</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Dijn gramschap heeft my <rhyme label="a" type="m">overgaen</rhyme>:</l>
        <l id="s10:l2" met="4" type="-+">Ick ben verdorven doir dijn' <rhyme label="b" type="f">schroomen</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Die daglijcx my als <rhyme label="b" type="f" corresp="#s10:l2">waterstroomen</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Omcinglen end om verre <rhyme label="a" type="m" corresp="#s10:l1">slaen</rhyme>.</l>
        <l id="s10:l5" met="4" type="-+">Ick ben alom, waer ick my <rhyme label="c" type="f">keere</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Met dijnen toirn' omringest <rhyme label="c" type="f" corresp="#s10:l5">Heere</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Du hebst van my seer verr' <rhyme label="a" type="m">gedaen</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Mijn magen ende beste <rhyme label="b" type="f">vrinden</rhyme>:</l>
        <l id="s11:l3" met="4" type="-+">Die my te voren wel <rhyme label="b" type="f" corresp="#s11:l2">beminden</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">End mijner saeck haer namen <rhyme label="a" type="m" corresp="#s11:l1">aen</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Sijn tsamen nu van my <rhyme label="c" type="f">geweken</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">End hebben heymlijck sick <rhyme label="c" type="f" corresp="#s11:l5">versteken</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

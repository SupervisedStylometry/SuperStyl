  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HA wrede Min, Gy doet myn <rhyme label="a" type="f">branden</rhyme>,</l>
        <l id="s1:l2" met="5" type="-+">Offerhanden, Al voor myn <rhyme label="b" type="m">Afgoddin</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">En sy als Steen, Of Elpen <rhyme label="c" type="m">Been</rhyme>:</l>
        <l id="s1:l4" met="4" type="-+">Acht myn smeken in geener <rhyme label="a" type="f" corresp="#s1:l1">handen</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Ha! wrede Min, Gy doet myn <rhyme label="a" type="f" corresp="#s1:l1">branden</rhyme>:</l>
        <l id="s1:l6" met="5" type="+-">Offerhanden, Al voor myn <rhyme label="b" type="m" corresp="#s1:l2">Afgoddin</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ach Minne Wicht! Laet u <rhyme label="a" type="f">verdrieten</rhyme>,</l>
        <l id="s2:l2" met="5" type="-+">Wilt schieten Toch in haer Borst een <rhyme label="b" type="m">schicht</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Op dat ook sy Gelyk als <rhyme label="c" type="m">my</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">De Minnen Vlammen ’t oog uyt <rhyme label="a" type="f" corresp="#s2:l1">vlieten</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Ach Minne Wicht! Laet u <rhyme label="a" type="f" corresp="#s2:l1">verdrieten</rhyme>,</l>
        <l id="s2:l6" met="5" type="+-">Wilt schieten Toch in haer Borst een <rhyme label="b" type="m" corresp="#s2:l2">schicht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">So sal myn smert, Ten eynden <rhyme label="a" type="f">wezen</rhyme>,</l>
        <l id="s3:l2" met="5" type="-+">Genezen, Sal wezen myn jong <rhyme label="b" type="m">hert</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Ik sal uw Boog En Pyltjes <rhyme label="c" type="m">hoog</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">En Koker Vergulden <rhyme label="a" type="f" corresp="#s3:l1">geprezen</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">So sal myn smert Ten eynde <rhyme label="a" type="f" corresp="#s3:l1">wezen</rhyme>,</l>
        <l id="s3:l6" met="5" type="+-">Genezen Sal wezen myn jong <rhyme label="b" type="m" corresp="#s3:l2">hert</rhyme>.</l>
      </lg>
    </lg>

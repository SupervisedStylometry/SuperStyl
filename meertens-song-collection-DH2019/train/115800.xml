    <melody>Te mei als alle vogels zingen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Claes Stapel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">AL leefd gy in druk en groot <rhyme label="a" type="m">gequel</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Al is uw lijden nog zoo <rhyme label="a" type="m" corresp="#s1:l1">fel</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Rebel moet gy niet <rhyme label="b" type="f">weezen</rhyme>:</l>
        <l id="s1:l4" met="3" type="-+">Godts oordeel is <rhyme label="c" type="m">goed</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Zijn naame <rhyme label="c" type="m" corresp="#s1:l4">moet</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Al-tijd worden <rhyme label="b" type="f" corresp="#s1:l3">gepreezen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Al word gy verdrukt, veragt, <rhyme label="a" type="m">versmaad</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Belagt, bespot, hoe dat het <rhyme label="a" type="m" corresp="#s2:l1">gaat</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Weez al-tijd <rhyme label="b" type="f">weltevreden</rhyme>:</l>
        <l id="s2:l4" met="3" type="-+">Maak  geen <rhyme label="c" type="m">gekrijt</rhyme></l>
        <l id="s2:l5" met="2" type="-+">Geduldig het <rhyme label="c" type="m" corresp="#s2:l4">lijd</rhyme></l>
        <l id="s2:l6" met="3" type="-+">'t Werd u tot <rhyme label="b" type="f" corresp="#s2:l3">zaaligheeden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Houd een geheel gelijk <rhyme label="a" type="m">gemoed</rhyme></l>
        <l id="s3:l2" met="4" type="-+">In lief, in leed, in zuur, in <rhyme label="a" type="m" corresp="#s3:l1">zoet</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">In 't goed hebben en <rhyme label="b" type="f">derven</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Volg deezen <rhyme label="c" type="m">leer</rhyme></l>
        <l id="s3:l5" met="2" type="-+">In zagt, in <rhyme label="c" type="m" corresp="#s3:l4">zeer</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">In leeven en in <rhyme label="b" type="f" corresp="#s3:l3">sterven</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Geen erger ding als eigen <rhyme label="a" type="m">wil</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">'t Maakt tusschen God en ons <rhyme label="a" type="m" corresp="#s4:l1">geschil</rhyme>.</l>
        <l id="s4:l3" met="3" type="-+">Zeer zoet komt hy <rhyme label="b" type="f">in-vloeyen</rhyme>;</l>
        <l id="s4:l4" met="3" type="-+">Als wil is <rhyme label="c" type="m">verzaakt</rhyme></l>
        <l id="s4:l5" met="2" type="-+">Word God <rhyme label="c" type="m" corresp="#s4:l4">gesmaakt</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">En doet in deugden <rhyme label="b" type="f" corresp="#s4:l3">groeyen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Dan wort 'er gebooren een geestelijk <rhyme label="a" type="m">man</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Die hem op-geeft en off'ren <rhyme label="a" type="m" corresp="#s5:l1">kan</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Voort-aan in Gods <rhyme label="b" type="f">behaagen</rhyme>;</l>
        <l id="s5:l4" met="3" type="-+">Met <rhyme label="c" type="m">dankbaardheid</rhyme></l>
        <l id="s5:l5" met="2" type="-+">Wat God <rhyme label="c" type="m" corresp="#s5:l4">op-leid</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Kan lijden zonder <rhyme label="b" type="f" corresp="#s5:l3">klaagen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Zie dit 's de regte <rhyme label="a" type="m">nieuwe-geboort</rhyme>:</l>
        <l id="s6:l2" met="4" type="-+">Als 't oude vlees verdrenkt, <rhyme label="a" type="m" corresp="#s6:l1">versmoort</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Door 't woord van <rhyme label="b" type="f">lijdzaamheeden</rhyme>;</l>
        <l id="s6:l4" met="3" type="-+">Dan sterrefd den <rhyme label="c" type="m">mensch</rhyme></l>
        <l id="s6:l5" met="2" type="-+">Zijn lust, zijn <rhyme label="c" type="m" corresp="#s6:l4">wensch</rhyme></l>
        <l id="s6:l6" met="3" type="-+">En al zijn <rhyme label="b" type="f" corresp="#s6:l3">zinlijkheeden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Niemand en kan onz ziele <rhyme label="a" type="m">scha'en</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Als wy vol-standig blijven <rhyme label="a" type="m" corresp="#s7:l1">staan</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Dood, Sathan, nog ook <rhyme label="b" type="f">helle</rhyme>:</l>
        <l id="s7:l4" met="3" type="-+">d' <rhyme label="c" type="m">On-lijdzaamheid</rhyme></l>
        <l id="s7:l5" met="2" type="-+">Die doet ons 't <rhyme label="c" type="m" corresp="#s7:l4">leid</rhyme></l>
        <l id="s7:l6" met="3" type="-+">En brengt ons in <rhyme label="b" type="f" corresp="#s7:l3">gequelle</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">'t Waapen, daar Christus meede <rhyme label="a" type="m">verwan</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Het hels Zerpent, (voor alle <rhyme label="a" type="m" corresp="#s8:l1">Man</rhyme>)</l>
        <l id="s8:l3" met="3" type="-+">Die niet is om <rhyme label="b" type="f">vol-prijzen</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Was <rhyme label="c" type="m">lijdzaamheid</rhyme></l>
        <l id="s8:l5" met="2" type="-+">Dies weez <rhyme label="c" type="m" corresp="#s8:l4">bereid</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Te volgen zijn <rhyme label="b" type="f" corresp="#s8:l3">advijzen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Onz' Heer moest in zijn glory <rhyme label="a" type="m">gaan</rhyme>.</l>
        <l id="s9:l2" met="4" type="-+">Door druk en lijden, 't is geen <rhyme label="a" type="m" corresp="#s9:l1">waan</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Deez baan moet gy <rhyme label="b" type="f">verkiezen</rhyme>;</l>
        <l id="s9:l4" met="3" type="-+">Versmaad gy deez <rhyme label="c" type="m">les</rhyme></l>
        <l id="s9:l5" met="2" type="-+">Zijt zeeker <rhyme label="c" type="m" corresp="#s9:l4">des</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Uw ziel zult gy <rhyme label="b" type="f" corresp="#s9:l3">verliezen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

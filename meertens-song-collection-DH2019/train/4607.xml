  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">WIe is toch deze <rhyme label="a" type="m">die</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Ik als een <rhyme label="b" type="m">dageraed</rhyme>//</l>
        <l id="s1:l3" met="3" type="-+">Van d’aerde klimmen <rhyme label="a" type="m" corresp="#s1:l1">zie</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Gebloost als een <rhyme label="b" type="m" corresp="#s1:l2">granaet</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Veel lichter als de <rhyme label="c" type="m">Zon</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Veel schoonder als de <rhyme label="d" type="m">Maen</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">En sterker als men <rhyme label="c" type="m" corresp="#s1:l5">von</rhyme>//</l>
        <l id="s1:l8" met="3" type="-+">Noch oit slag-oorde <rhyme label="d" type="m" corresp="#s1:l6">staen</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">’t Is Iesus echte <rhyme label="a" type="m">bruyd</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Die door zijn liefde <rhyme label="b" type="m">leeft</rhyme>:</l>
        <l id="s2:l3" met="3" type="-+">En hy met <rhyme label="a" type="m" corresp="#s2:l1">Borit-kruid</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Zoo schoon gewasschen <rhyme label="b" type="m" corresp="#s2:l2">heeft</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">’t Is d’eygen Tempel <rhyme label="c" type="m">Goods</rhyme>:</l>
        <l id="s2:l6" met="3" type="-+">’t Is Christus lieve <rhyme label="d" type="m">Kerk</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Die hy recht als een <rhyme label="c" type="m" corresp="#s2:l5">roots</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Geboud heeft vast en <rhyme label="d" type="m" corresp="#s2:l6">sterk</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">De Veld-heer <rhyme label="a" type="m">algemeen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Van deze leger <rhyme label="b" type="m">kracht</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Is d’onbewoge <rhyme label="a" type="m" corresp="#s3:l1">Steen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Die d’Helsche poort <rhyme label="b" type="m" corresp="#s3:l2">bemagt</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Een Held, die God <rhyme label="c" type="m">verkoos</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Om ’t gansche Christen <rhyme label="d" type="m">veld</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Op zijn gegeve <rhyme label="c" type="m" corresp="#s3:l5">loos</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Te vryen van <rhyme label="d" type="m" corresp="#s3:l6">geweld</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Hy is, door wiens <rhyme label="a" type="m">bestier</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Wy hebben even <rhyme label="b" type="m">wel</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Zoo menig Bisschop <rhyme label="a" type="m" corresp="#s4:l1">schier</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Zoo menig <rhyme label="b" type="m" corresp="#s4:l2">Colonnel</rhyme></l>
        <l id="s4:l5" met="3" type="-+">En deze onder <rhyme label="c" type="m">haer</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Pastoren, min oft <rhyme label="d" type="m">meer</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Als Kapiteinen <rhyme label="c" type="m" corresp="#s4:l5">klaer</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Van’t Israelsche <rhyme label="d" type="m" corresp="#s4:l6">Heer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Hier onder vecht, en <rhyme label="a" type="m">wind</rhyme></l>
        <l id="s5:l2" met="3" type="-+">De gansche Christen <rhyme label="b" type="m">tocht</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Die als een vast <rhyme label="a" type="m" corresp="#s5:l1">gebindt</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Te zaemen is <rhyme label="b" type="m" corresp="#s5:l2">geknocht</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Prins Iesu stijft en <rhyme label="c" type="m">houd</rhyme></l>
        <l id="s5:l6" met="3" type="-+">My staend’ in mijn <rhyme label="d" type="m">gelit</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Die’k dien om ’t rike <rhyme label="c" type="m" corresp="#s5:l5">soud</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Van’t Hemelsche <rhyme label="d" type="m" corresp="#s5:l6">bezit</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

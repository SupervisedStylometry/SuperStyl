    <melody>Allein zu dir Herr Jesu Christ</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Johan Fruytiers</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Godt schiep deur sijn macht ende <rhyme label="a" type="m">ghewelt</rhyme>//</l>
        <l id="s1:l2" met="3" type="-+">den mensch van groo ter <rhyme label="b" type="f">waerde</rhyme>//</l>
        <l id="s1:l3" met="4" type="-+">Den tijdt sijn levens in hem <rhyme label="a" type="m" corresp="#s1:l1">ghestelt</rhyme>//</l>
        <l id="s1:l4" met="4" type="-+">Hy is en werdt oock weder <rhyme label="b" type="f" corresp="#s1:l2">aerde</rhyme>//</l>
        <l id="s1:l5" met="4" type="+-">na sijn beelt heeft hy hem <rhyme label="c" type="m">ghemaect</rhyme>//</l>
        <l id="s1:l6" met="4" type="-+">Aen groote macht is hy <rhyme label="c" type="m" corresp="#s1:l5">gheraect</rhyme>//</l>
        <l id="s1:l7" met="3" type="-+">vervult met goede <rhyme label="d" type="f">seden</rhyme>//</l>
        <l id="s1:l8" met="3" type="-+">en sijn vreese <rhyme label="c" type="m" corresp="#s1:l5">smaect</rhyme>//</l>
        <l id="s1:l9" met="4" type="+-">alle ghedierte hier <rhyme label="d" type="f" corresp="#s1:l7">beneden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Hy gaf hem vernuft dat hy <rhyme label="a" type="m">verstaet</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Sprake, verstandt, ooren, en <rhyme label="b" type="f">ooghen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En kennisse van goet ende <rhyme label="a" type="m" corresp="#s2:l1">quaet</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Besonder cost hy hem <rhyme label="b" type="f" corresp="#s2:l2">verhooghen</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Bouen dander ghedierten <rhyme label="c" type="m">al</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">En gaf hem kennis in dit <rhyme label="c" type="m" corresp="#s2:l5">dal</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Sijn maiesteyt te <rhyme label="d" type="f">louen</rhyme>:</l>
        <l id="s2:l8" met="3" type="-+">Ende na den <rhyme label="c" type="m" corresp="#s2:l5">val</rhyme></l>
        <l id="s2:l9" met="4" type="+-">Gaf hy haer sijne wet van <rhyme label="d" type="f" corresp="#s2:l7">bouen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Hy maecte met haer eeuwich <rhyme label="a" type="m">verbondt</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Haer ooghen saghen sijne <rhyme label="b" type="f">maiesteyt</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Heur ooren hoorden tot dijer <rhyme label="a" type="m" corresp="#s3:l1">stondt</rhyme></l>
        <l id="s3:l4" met="4" type="-+">De stemme sijnder <rhyme label="b" type="f" corresp="#s3:l2">heerlijcheyt</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Hy sprack tot hun met woorden <rhyme label="c" type="m">soet</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Siet dat ghy v voor onrecht <rhyme label="c" type="m" corresp="#s3:l5">hoet</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">V naeste wilt <rhyme label="d" type="f">besorghen</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Heur oock liefde <rhyme label="c" type="m" corresp="#s3:l5">doet</rhyme>:</l>
        <l id="s3:l9" met="4" type="+-">Want voor my en is niet <rhyme label="d" type="f" corresp="#s3:l7">verborghen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Hy heeft verordent in elcke <rhyme label="a" type="m">landt</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Sijn heerschappije tot sijn <rhyme label="b" type="f">eere</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Maer ouer Israel was sijn <rhyme label="a" type="m" corresp="#s4:l1">handt</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Van haer woude hy selfs sijn <rhyme label="b" type="f" corresp="#s4:l2">Heere</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Ende deur hem sijn <rhyme label="c" type="m">openbaer</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Haer wercken als de sonne <rhyme label="c" type="m" corresp="#s4:l5">claer</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Sijn ooghen sijn mids <rhyme label="d" type="f">desen</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Altijt oock op <rhyme label="c" type="m" corresp="#s4:l5">haer</rhyme>,</l>
        <l id="s4:l9" met="4" type="+-">Gheen sond en sal verborghen <rhyme label="d" type="f" corresp="#s4:l7">wesen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Het t'smenschen weldaet hy <rhyme label="a" type="m">bewaert</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Ghelijckmen doet een <rhyme label="b" type="f">seghelrinck</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">De goede wercken en goeden <rhyme label="a" type="m" corresp="#s5:l1">aert</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Als een oochappel hy in hoedt <rhyme label="b" type="f" corresp="#s5:l2">ontfinck</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Hy sal opwaken int <rhyme label="c" type="m">leste</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Ende als dan dander <rhyme label="c" type="m" corresp="#s5:l5">reste</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Op haeren cop <rhyme label="d" type="f">verghelden</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Die het <rhyme label="c" type="m" corresp="#s5:l5">beste</rhyme></l>
        <l id="s5:l9" met="4" type="+-">Hier volghden vergaen <rhyme label="d" type="f" corresp="#s5:l7">selden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Want wie hem betert t'eenigher <rhyme label="a" type="m">tijt</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Die laet hy tot ghenade <rhyme label="b" type="f">comen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Den droeuighen hy hier oock <rhyme label="a" type="m" corresp="#s6:l1">verblijt</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Van hun wort troost <rhyme label="b" type="f" corresp="#s6:l2">vernomen</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Bekeert v dan tot uwen <rhyme label="c" type="m">Godt</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">En volghet sijn godlijck <rhyme label="c" type="m" corresp="#s6:l5">ghebodt</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">En laet v sondich <rhyme label="d" type="f">leuen</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Den Heer <rhyme label="c" type="m" corresp="#s6:l5">Sabaodt</rhyme></l>
        <l id="s6:l9" met="4" type="+-">Bidt dat v sonden wil <rhyme label="d" type="f" corresp="#s6:l7">vergheuen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Wie sal den hoochsten met sijn <rhyme label="a" type="m">stem</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Louen al inder <rhyme label="b" type="f">hellen</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Want alleen leuende louen <rhyme label="a" type="m" corresp="#s7:l1">hem</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Doode kunnen gheen lof <rhyme label="b" type="f" corresp="#s7:l2">vertellen</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Daeromme den Heer looft en <rhyme label="c" type="m">prijst</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Te wijl ghesontheyt in v <rhyme label="c" type="m" corresp="#s7:l5">rijst</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Want groot is sijn <rhyme label="d" type="f">ghenade</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Die hy hier <rhyme label="c" type="m" corresp="#s7:l5">bewijst</rhyme></l>
        <l id="s7:l9" met="4" type="+-">Aen den bekeerden vroech en <rhyme label="d" type="f" corresp="#s7:l7">spade</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Want wat can doch een mensche <rhyme label="a" type="m">sijn</rhyme></l>
        <l id="s8:l2" met="3" type="-+">De wijl hy hier is <rhyme label="b" type="f">sterffelijck</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Wat is claerder dan der sonnen <rhyme label="a" type="m" corresp="#s8:l1">schijn</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">En nochtans is sy <rhyme label="b" type="f" corresp="#s8:l2">bederffelijck</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Oock al wat vleesch en bloet hier <rhyme label="c" type="m">dicht</rhyme></l>
        <l id="s8:l6" met="4" type="-+">Is een boos dinck: dan Godts <rhyme label="c" type="m" corresp="#s8:l5">ghesicht</rhyme></l>
        <l id="s8:l7" met="3" type="-+">Siet de hoocht <rhyme label="d" type="f">onghemeten</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Int hemelsche <rhyme label="c" type="m" corresp="#s8:l5">licht</rhyme>:</l>
        <l id="s8:l9" met="4" type="+-">Maer aerdt sijn wy op aerden <rhyme label="d" type="f" corresp="#s8:l7">gheseten</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

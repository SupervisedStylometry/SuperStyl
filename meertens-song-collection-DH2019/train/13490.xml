    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">OGod, wy zijn alhier te <rhyme label="a" type="m">saem</rhyme></l>
        <l id="s1:l2" met="2" type="-+">Verhoort ons doch tot deser <rhyme label="a" type="m" corresp="#s1:l1">stond</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">In Christi Naem <rhyme label="b" type="m">Vergadert</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">geeft ons Uwen <rhyme label="c" type="f">Geest</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Die ons ter waerheid <rhyme label="d" type="m">leide</rhyme>:</l>
        <l id="s1:l6" met="2" type="-+">Geeft vrye mond Uw <rhyme label="d" type="m" corresp="#s1:l5">Dienaer</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">dat hy <rhyme label="b" type="m" corresp="#s1:l3">onbevreest</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Uw heiligh Woord <rhyme label="c" type="f" corresp="#s1:l4">verbreide</rhyme>:</l>
        <l id="s1:l9" met="4" type="-+">Daer toe, Ã´ goedertieren <rhyme label="e" type="m">Heer</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">Ontsluit ons' hert en <rhyme label="f" type="f">ooren</rhyme>,</l>
        <l id="s1:l11" met="4" type="+-">Dat wy Uw <rhyme label="e" type="m" corresp="#s1:l9">salighmaekend'</rhyme></l>
        <l id="s1:l12" met="3" type="-+">Leer Aendachtelik <rhyme label="f" type="f" corresp="#s1:l10">aenhooren</rhyme>;</l>
        <l id="s1:l13" met="4" type="-+">Met vrucht <rhyme label="e" type="m" corresp="#s1:l9">bewaeren</rhyme>,</l>
        <l id="s1:l14" met="3" type="-+">dat Uw eer Gelooft zy na <rhyme label="f" type="f" corresp="#s1:l10">behooren</rhyme>.</l>
      </lg>

  <author>Albertus Buitendyck</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">AL was een mensch <rhyme label="a" type="f">beladen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Met 's wereldts wijsheydt <rhyme label="b" type="m">al</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Voorsichtigheyt en <rhyme label="a" type="f" corresp="#s1:l1">raden</rhyme>;</l>
        <l id="s1:l4" met="3" type="-+">Geenzins beroove <rhyme label="b" type="m" corresp="#s1:l2">zal</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Godts eer, of wonder <rhyme label="c" type="f">wercken</rhyme>.</l>
        <l id="s1:l6" met="3" type="-+">Dit sullen wy nu <rhyme label="d" type="m">klaer</rhyme></l>
        <l id="s1:l7" met="3" type="-+">In Iesus Kruys <rhyme label="c" type="f" corresp="#s1:l5">bemercken</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Begraven meenigh <rhyme label="d" type="m" corresp="#s1:l6">Iaer</rhyme>.</l>
        <l id="s1:l9" met="1" type="-+">Met <rhyme label="e" type="m">vreught</rhyme></l>
        <l id="s1:l10" met="2" type="-+">zinght en <rhyme label="e" type="m" corresp="#s1:l9">geneught</rhyme>:</l>
        <l id="s1:l11" met="3" type="+-">Gevonden is nu <rhyme label="f" type="m">weer</rhyme></l>
        <l id="s1:l12" met="3" type="-+">'t Bloedigh Kruys van den <rhyme label="f" type="m" corresp="#s1:l11">Heer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Aen Constantinus <rhyme label="a" type="f">Moeder</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Helena <rhyme label="b" type="m">Keyserin</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Iesus, onse <rhyme label="a" type="f" corresp="#s2:l1">Behoeder</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Verklaerde sijnen <rhyme label="b" type="m" corresp="#s2:l2">zin</rhyme>;</l>
        <l id="s2:l5" met="3" type="-+">Dat sy moet selver <rhyme label="c" type="f">treden</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Na Ierusalem <rhyme label="d" type="m">toe</rhyme>:</l>
        <l id="s2:l7" met="3" type="-+">Al waer hy had <rhyme label="c" type="f" corresp="#s2:l5">geleden</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Door 't Kruys, nagels en <rhyme label="d" type="m" corresp="#s2:l6">roe</rhyme>.</l>
        <l id="s2:l9" met="1" type="-+">Och <rhyme label="e" type="m">hout</rhyme></l>
        <l id="s2:l10" met="2" type="-+">waerder als 't <rhyme label="e" type="m" corresp="#s2:l9">gout</rhyme>,</l>
        <l id="s2:l11" met="3" type="+-">Waer aen gehangen <rhyme label="f" type="m">heeft</rhyme>,</l>
        <l id="s2:l12" met="3" type="-+">Iesus, die alles <rhyme label="f" type="m" corresp="#s2:l11">geeft</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Als sy nu was <rhyme label="a" type="f">gekomen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Tot Jesus lijdens <rhyme label="b" type="m">plaets</rhyme>;</l>
        <l id="s3:l3" met="3" type="-+">Alhier heeft sy <rhyme label="a" type="f" corresp="#s3:l1">vernomen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Venus beeldt, (Satans <rhyme label="b" type="m" corresp="#s3:l2">aes</rhyme>.)</l>
        <l id="s3:l5" met="3" type="-+">Dit Beeldt stondt op die <rhyme label="c" type="f">erven</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Om dat de eer en <rhyme label="d" type="m">naem</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Van Christus zouw <rhyme label="c" type="f" corresp="#s3:l5">versterven</rhyme>;</l>
        <l id="s3:l8" met="3" type="-+">En 't waerdste kruys, van <rhyme label="d" type="m" corresp="#s3:l6">faem</rhyme>.</l>
        <l id="s3:l9" met="1" type="-+">Met <rhyme label="e" type="m">vreught</rhyme></l>
        <l id="s3:l10" met="2" type="-+">zinght en <rhyme label="e" type="m" corresp="#s3:l9">geneught</rhyme>:</l>
        <l id="s3:l11" met="3" type="+-">Gevonden is nu <rhyme label="f" type="m">weer</rhyme></l>
        <l id="s3:l12" met="3" type="-+">'t Bloedigh Kruys van den <rhyme label="f" type="m" corresp="#s3:l11">Heer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Door dit vuyl beeldt <rhyme label="a" type="f">beletten</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Dat daer noyt Man of <rhyme label="b" type="m">Vrouw</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Die leefde na Goods <rhyme label="a" type="f" corresp="#s4:l1">Wetten</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Komen, of bidde <rhyme label="b" type="m" corresp="#s4:l2">zouw</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Al die by dagh, of <rhyme label="c" type="f">nachten</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Quamen tot dit snoodt <rhyme label="d" type="m">Beeldt</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Schijnen Godt te <rhyme label="c" type="f" corresp="#s4:l5">verachten</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">En aen Satan <rhyme label="d" type="m" corresp="#s4:l6">gezeelt</rhyme>.</l>
        <l id="s4:l9" met="1" type="-+">Och <rhyme label="e" type="m">hout</rhyme></l>
        <l id="s4:l10" met="2" type="-+">waerder als 't <rhyme label="e" type="m" corresp="#s4:l9">gout</rhyme>,</l>
        <l id="s4:l11" met="3" type="+-">Waer aen gehangen <rhyme label="f" type="m">heeft</rhyme>,</l>
        <l id="s4:l12" met="3" type="-+">Iesus, die alles <rhyme label="f" type="m" corresp="#s4:l11">geeft</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Helena <rhyme label="a" type="f">Keyserinne</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Veracht, vertreedt, <rhyme label="b" type="m">verstoot</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Dit Beeldt van <rhyme label="a" type="f" corresp="#s5:l1">d'Afodinne</rhyme>:</l>
        <l id="s5:l4" met="3" type="-+">Daer na met yver <rhyme label="b" type="m" corresp="#s5:l2">groot</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Hier onder wordt <rhyme label="c" type="f">gegraven</rhyme>;</l>
        <l id="s5:l6" met="3" type="-+">Eerst vinden been en <rhyme label="d" type="m">steen</rhyme>;</l>
        <l id="s5:l7" met="3" type="-+">Na 't graven ende <rhyme label="c" type="f" corresp="#s5:l5">slaven</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Sien kruyssen twee en <rhyme label="d" type="m" corresp="#s5:l6">een</rhyme>,.</l>
        <l id="s5:l9" met="1" type="-+">Met <rhyme label="e" type="m">vreught</rhyme></l>
        <l id="s5:l10" met="2" type="-+">zinght en <rhyme label="e" type="m" corresp="#s5:l9">geneught</rhyme>:</l>
        <l id="s5:l11" met="3" type="+-">Gevonden is nu <rhyme label="f" type="m">weer</rhyme></l>
        <l id="s5:l12" met="3" type="-+">'t Bloedigh Kruys van den <rhyme label="f" type="m" corresp="#s5:l11">Heer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">'t Op-schrift van 't Kruys des <rhyme label="a" type="f">Heeren</rhyme>.</l>
        <l id="s6:l2" met="3" type="-+">Lagh verr' van 't Kruys van <rhyme label="b" type="m">daen</rhyme>.</l>
        <l id="s6:l3" met="3" type="-+">Macharius, vol <rhyme label="a" type="f" corresp="#s6:l1">eeren</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Bisschop, spreeckt 't volck zoo <rhyme label="b" type="m" corresp="#s6:l2">aen</rhyme>:</l>
        <l id="s6:l5" met="3" type="-+">Laet ons nu <rhyme label="c" type="f">neder-valle</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">En bidden Godt den <rhyme label="d" type="m">Heer</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Dat hy sijn kruys ons <rhyme label="c" type="f" corresp="#s6:l5">alle</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Toont, na onse <rhyme label="d" type="m" corresp="#s6:l6">begeer</rhyme>.</l>
        <l id="s6:l9" met="1" type="-+">Och <rhyme label="e" type="m">hout</rhyme></l>
        <l id="s6:l10" met="2" type="-+">waerder als 't <rhyme label="e" type="m" corresp="#s6:l9">gout</rhyme>,</l>
        <l id="s6:l11" met="3" type="+-">Waer aen gehangen <rhyme label="f" type="m">heeft</rhyme>,</l>
        <l id="s6:l12" met="3" type="-+">Iesus, die alles <rhyme label="f" type="m" corresp="#s6:l11">geeft</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Als de Doctoors <rhyme label="a" type="f">op-geven</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Haren moet van een <rhyme label="b" type="m">Vrouw</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Die niet langer kost <rhyme label="a" type="f" corresp="#s7:l1">leven</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Maer sterven moet, en <rhyme label="b" type="m" corresp="#s7:l2">souw</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Op kruyscen twee van <rhyme label="c" type="f">dese</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Geleyt, krijght troost noch <rhyme label="d" type="m">baet</rhyme>;</l>
        <l id="s7:l7" met="3" type="-+">Door 't derde is <rhyme label="c" type="f" corresp="#s7:l5">genezen</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Gesondt hier van <rhyme label="d" type="m" corresp="#s7:l6">op-staet</rhyme>.</l>
        <l id="s7:l9" met="1" type="-+">Met <rhyme label="e" type="m">vreught</rhyme></l>
        <l id="s7:l10" met="2" type="-+">zinght en <rhyme label="e" type="m" corresp="#s7:l9">geneught</rhyme>:</l>
        <l id="s7:l11" met="3" type="+-">Gevonden is nu <rhyme label="f" type="m">weer</rhyme></l>
        <l id="s7:l12" met="3" type="-+">'t Bloedigh Kruys van den <rhyme label="f" type="m" corresp="#s7:l11">Heer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Daer na een dooden <rhyme label="a" type="f">mede</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Op 't zelfde kruys <rhyme label="b" type="m">geleydt</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Krijght leven in haer <rhyme label="a" type="f" corresp="#s8:l1">leden</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">En volle <rhyme label="b" type="m" corresp="#s8:l2">gesontheyt</rhyme>.</l>
        <l id="s8:l5" met="3" type="-+">Helena haer <rhyme label="c" type="f">verblijde</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Met 't volck, om dit Goods <rhyme label="d" type="m">werck</rhyme>:</l>
        <l id="s8:l7" met="3" type="-+">Sy bouwt na korte <rhyme label="c" type="f" corresp="#s8:l5">tijde</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Op dese plaets een <rhyme label="d" type="m" corresp="#s8:l6">Kerck</rhyme>.</l>
        <l id="s8:l9" met="1" type="-+">Och <rhyme label="e" type="m">hout</rhyme></l>
        <l id="s8:l10" met="2" type="-+">waerder als 't <rhyme label="e" type="m" corresp="#s8:l9">gout</rhyme>,</l>
        <l id="s8:l11" met="3" type="+-">Waer aen gehangen <rhyme label="f" type="m">heeft</rhyme>,</l>
        <l id="s8:l12" met="3" type="-+">Iesus, die alles <rhyme label="f" type="m" corresp="#s8:l11">geeft</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Nimmermeer <rhyme label="a" type="f">glorieren</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Wilt menschen jongh en <rhyme label="b" type="m">oudt</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Als in het kruys des <rhyme label="a" type="f" corresp="#s9:l1">Heeren</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Dat sijn bloedt heeft <rhyme label="b" type="m" corresp="#s9:l2">bedouwt</rhyme>.</l>
        <l id="s9:l5" met="3" type="-+">Laet leven in uw' <rhyme label="c" type="f">harten</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Uw' Iesus liefde <rhyme label="d" type="m">groot</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Sijn wonden , pijn en <rhyme label="c" type="f" corresp="#s9:l5">smarten</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">En alderswaerste <rhyme label="d" type="m" corresp="#s9:l6">doodt</rhyme>.</l>
        <l id="s9:l9" met="1" type="-+">Met <rhyme label="e" type="m">vreught</rhyme></l>
        <l id="s9:l10" met="2" type="-+">zinght en <rhyme label="e" type="m" corresp="#s9:l9">geneught</rhyme>:</l>
        <l id="s9:l11" met="3" type="+-">Gevonden is nu <rhyme label="f" type="m">weer</rhyme></l>
        <l id="s9:l12" met="3" type="-+">'t Bloedigh Kruys van den <rhyme label="f" type="m" corresp="#s9:l11">Heer</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">O kruys van groote <rhyme label="a" type="f">waerden</rhyme>!</l>
        <l id="s10:l2" met="3" type="-+">O waerdste <rhyme label="b" type="m">Meye-boom</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Gevonden onder <rhyme label="a" type="f" corresp="#s10:l1">d'aerde</rhyme>;</l>
        <l id="s10:l4" met="3" type="-+">Maeckt ons alle soo <rhyme label="b" type="m" corresp="#s10:l2">vroom</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Met Constantijn te <rhyme label="c" type="f">winnen</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Onse vyanden <rhyme label="d" type="m">quaet</rhyme>;</l>
        <l id="s10:l7" met="3" type="-+">Ons vlees, ons quade <rhyme label="c" type="f" corresp="#s10:l5">zinnen</rhyme>,</l>
        <l id="s10:l8" met="3" type="-+">En Satans quaede <rhyme label="d" type="m" corresp="#s10:l6">raedt</rhyme>.</l>
        <l id="s10:l9" met="1" type="-+">Och <rhyme label="e" type="m">hout</rhyme></l>
        <l id="s10:l10" met="2" type="-+">waerder als 't <rhyme label="e" type="m" corresp="#s10:l9">gout</rhyme>,</l>
        <l id="s10:l11" met="3" type="+-">Waer aen gehangen <rhyme label="f" type="m">heeft</rhyme>,</l>
        <l id="s10:l12" met="3" type="-+">Iesus, die alles <rhyme label="f" type="m" corresp="#s10:l11">geeft</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">O kruys! Voor uw' wy <rhyme label="a" type="f">knielen</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">En voor uw' Godes <rhyme label="b" type="m">Lam</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Tot troost van onse <rhyme label="a" type="f" corresp="#s11:l1">zielen</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Ons lijde op uw' <rhyme label="b" type="m" corresp="#s11:l2">nam</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Door uw' kruys toont <rhyme label="c" type="f">genaden</rhyme></l>
        <l id="s11:l6" met="3" type="-+">Aen ons, en door uw' <rhyme label="d" type="m">bloedt</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">Afwast onse qua <rhyme label="c" type="f" corresp="#s11:l5">daden</rhyme>;</l>
        <l id="s11:l8" met="3" type="-+">Geeft ons uw' Hemels <rhyme label="d" type="m" corresp="#s11:l6">goedt</rhyme>.</l>
        <l id="s11:l9" met="1" type="-+">Met <rhyme label="e" type="m">vreught</rhyme></l>
        <l id="s11:l10" met="2" type="-+">zinght en <rhyme label="e" type="m" corresp="#s11:l9">geneught</rhyme>:</l>
        <l id="s11:l11" met="3" type="+-">Gevonden is nu <rhyme label="f" type="m">weer</rhyme></l>
        <l id="s11:l12" met="3" type="-+">'t Bloedigh Kruys van den <rhyme label="f" type="m" corresp="#s11:l11">Heer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

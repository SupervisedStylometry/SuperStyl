  <author>Hendrik Rintjes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Laet ons den Heere <rhyme label="a" type="f">loven</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Wy die hier zijn by <rhyme label="b" type="m">een</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Den grooten Godt hier <rhyme label="a" type="f" corresp="#s1:l1">boven</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Aleer wy van hier <rhyme label="b" type="m" corresp="#s1:l2">scheen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Om sijn groote <rhyme label="c" type="f">ghenaden</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Die hy ons hier <rhyme label="d" type="m">bewijst</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Als hy ons doet <rhyme label="c" type="f" corresp="#s1:l5">versaden</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Iae met sijn woort oock <rhyme label="d" type="m" corresp="#s1:l6">spijst</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Konden wy te recht <rhyme label="a" type="f">vaten</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Ende oock wel <rhyme label="b" type="m">verstaen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Hoe onse Ouders <rhyme label="a" type="f" corresp="#s2:l1">saten</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Met duysternis <rhyme label="b" type="m" corresp="#s2:l2">bevaen</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">En moesten haer al <rhyme label="c" type="f">lijden</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Met menschelijcke <rhyme label="d" type="m">Leer</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Daer wy in dese <rhyme label="c" type="f" corresp="#s2:l5">tijden</rhyme>.</l>
        <l id="s2:l8" met="3" type="-+">Gods woort ghenieten <rhyme label="d" type="m" corresp="#s2:l6">seer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Laet ons doch wel <rhyme label="a" type="f">betragten</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Dat wy hebben <rhyme label="b" type="m">ghehoort</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Met wercken en <rhyme label="a" type="f" corresp="#s3:l1">ghedachten</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Tot eer van Godes <rhyme label="b" type="m" corresp="#s3:l2">woordt</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Anders mocht Godt <rhyme label="c" type="f">verstooren</rhyme>:</l>
        <l id="s3:l6" met="3" type="-+">End’ ons verwerpen <rhyme label="d" type="m">snel</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Als gheschiedt is te <rhyme label="c" type="f" corresp="#s3:l5">vooren</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Aen sijn volck <rhyme label="d" type="m" corresp="#s3:l6">Israel</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Waer o liefste <rhyme label="a" type="f">ghepreesen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Ghedenckt Gods liefde <rhyme label="b" type="m">groot</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Die hy ons heeft <rhyme label="a" type="f" corresp="#s4:l1">beweesen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Door sijns Soons bitt’ren <rhyme label="b" type="m" corresp="#s4:l2">doodt</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">So wy sulcx doen <rhyme label="c" type="f">aendachtigh</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Wy sullen haest <rhyme label="d" type="m">terstont</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Godt en ons naesten <rhyme label="c" type="f" corresp="#s4:l5">krachtigh</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Dienen uyt ‘s herten <rhyme label="d" type="m" corresp="#s4:l6">gront</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Soo moghen wy dan <rhyme label="a" type="f">hooren</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Komt in mijn Rijcke <rhyme label="b" type="m">jent</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Ghy die ick heb <rhyme label="a" type="f" corresp="#s5:l1">verkooren</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Gaet in des Hemels <rhyme label="b" type="m" corresp="#s5:l2">Thent</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Och! wat een vreught <rhyme label="c" type="f">ghepreesen</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Sal daer wesen <rhyme label="d" type="m">bereyt</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Voor die den Heere <rhyme label="c" type="f" corresp="#s5:l5">vreesen</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Tot in der <rhyme label="d" type="m" corresp="#s5:l6">eeuwigheyt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Vrienden eer wy hier <rhyme label="a" type="f">scheyden</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Wensch ick u voor een <rhyme label="b" type="m">groet</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Gods gheest wil u <rhyme label="a" type="f" corresp="#s6:l1">gheleyden</rhyme></l>
        <l id="s6:l4" met="3" type="-+">In al u weghen <rhyme label="b" type="m" corresp="#s6:l2">goet</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">En wilt doch niet <rhyme label="c" type="f">vergeten</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Malkand’ren in ‘t <rhyme label="d" type="m">ghebedt</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Maer dat ghy zijt <rhyme label="c" type="f" corresp="#s6:l5">gheseten</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Oorlof hier wel op <rhyme label="d" type="m" corresp="#s6:l6">let</rhyme>.</l>
      </lg>
    </lg>
  </text>

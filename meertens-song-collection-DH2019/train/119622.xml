  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="+-">O wat <rhyme label="a" type="f">heerlijk</rhyme>,</l>
        <l id="s1:l2" met="2" type="+-">Wat <rhyme label="a" type="f" corresp="#s1:l1">begeerlijk</rhyme></l>
        <l id="s1:l3" met="2" type="+-"><rhyme label="b" type="m">Zielsvermaak</rhyme>;</l>
        <l id="s1:l4" met="4" type="+-">Nu ik door Gods liefde <rhyme label="b" type="m" corresp="#s1:l3">blaak</rhyme>!</l>
        <l id="s1:l5" met="2" type="+-">'k Zal <rhyme label="c" type="f">beneden</rhyme>,</l>
        <l id="s1:l6" met="2" type="+-">'t Stof <rhyme label="c" type="f" corresp="#s1:l5">vertreeden</rhyme>:</l>
        <l id="s1:l7" met="4" type="+-">Goël is mijn schat en <rhyme label="d" type="m">lust</rhyme>;</l>
        <l id="s1:l8" met="4" type="+-">Goël al de grond van <rhyme label="d" type="m" corresp="#s1:l7">rust</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="+-">'k Voel mij <rhyme label="a" type="f">dringen</rhyme>,</l>
        <l id="s2:l2" met="2" type="+-">'k Voel mij <rhyme label="a" type="f" corresp="#s2:l1">dwingen</rhyme>,</l>
        <l id="s2:l3" met="2" type="+-"><rhyme label="b" type="m">Hemelstem</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Die mij krachtig noodt tot <rhyme label="b" type="m" corresp="#s2:l3">Hem</rhyme>.</l>
        <l id="s2:l5" met="2" type="+-">Hart en <rhyme label="c" type="f">oogen</rhyme>,</l>
        <l id="s2:l6" met="2" type="+-">De aarde <rhyme label="c" type="f" corresp="#s2:l5">ontvloogen</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Slaan op 't ondermaansch geen <rhyme label="d" type="m">acht</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Nu mijn ziel de heilzon <rhyme label="d" type="m" corresp="#s2:l7">wacht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="+-">Daar is 't <rhyme label="a" type="f">heilig</rhyme>,</l>
        <l id="s3:l2" met="2" type="+-">Daar is 't <rhyme label="a" type="f" corresp="#s3:l1">veilig</rhyme>,</l>
        <l id="s3:l3" met="2" type="+-">Daar is <rhyme label="b" type="m">licht</rhyme>:</l>
        <l id="s3:l4" met="4" type="+-">Licht, waar voor het duist're <rhyme label="b" type="m" corresp="#s3:l3">zwigt</rhyme>.</l>
        <l id="s3:l5" met="2" type="+-">Hem te <rhyme label="c" type="f">aanschouwen</rhyme>;</l>
        <l id="s3:l6" met="2" type="+-">In 't <rhyme label="c" type="f" corresp="#s3:l5">vertrouwen</rhyme>;</l>
        <l id="s3:l7" met="4" type="+-">Maakt mijn ziel in God <rhyme label="d" type="m">bedaard</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">En 't benevelde <rhyme label="d" type="m" corresp="#s3:l7">opgeklaard</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="+-">Zijn <rhyme label="a" type="f">ontferming</rhyme>,</l>
        <l id="s4:l2" met="2" type="+-">Zijn <rhyme label="a" type="f" corresp="#s4:l1">bescherming</rhyme>,</l>
        <l id="s4:l3" met="2" type="+-">Doet mij <rhyme label="b" type="m">staan</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">In den strijd gemoedigd <rhyme label="b" type="m" corresp="#s4:l3">gaan</rhyme>;</l>
        <l id="s4:l5" met="2" type="+-">Die mijn' <rhyme label="c" type="f">Borge</rhyme>,</l>
        <l id="s4:l6" met="2" type="+-">Al de <rhyme label="c" type="f" corresp="#s4:l5">zorge</rhyme></l>
        <l id="s4:l7" met="4" type="+-">Voor mijn heil, geheel <rhyme label="d" type="m">betrouw</rhyme>;</l>
        <l id="s4:l8" met="4" type="+-">Hij 's de rots, die ik <rhyme label="d" type="m" corresp="#s4:l7">behou</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

    <melody>Houd je rust Tyter</melody>
  <author>Cornelis Maertsz.</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="6" type="+-">EErstmael was // als Gods Bruydt den Mensch <rhyme label="a" type="m">verciert</rhyme>:</l>
        <l id="s1:l2" met="3" type="+-">Maer, o droeve <rhyme label="b" type="m">stoot</rhyme>!</l>
        <l id="s1:l3" met="6" type="+-">Want seer ras // heeft de Slangh, dat boos <rhyme label="a" type="m" corresp="#s1:l1">gediert</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">Haer 't cieraet <rhyme label="c" type="f">ontnomen</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">En verwondet, ja <rhyme label="b" type="m" corresp="#s1:l2">gedoodt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="6" type="+-">Doe ontstack // hier op Godts <rhyme label="a" type="m">barmhertigheydt</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">Over sulck <rhyme label="b" type="m">ellend</rhyme>,</l>
        <l id="s2:l3" met="6" type="+-">En hy sprack: ghy die hier verslaghen <rhyme label="a" type="m" corresp="#s2:l1">leydt</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">Sult weer saligh <rhyme label="c" type="f">leven</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">By my eeuwigh sonder <rhyme label="b" type="m" corresp="#s2:l2">end</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="6" type="+-">Daer op quam // 't nieuwe leven weer in <rhyme label="a" type="m">haer</rhyme>,</l>
        <l id="s3:l2" met="3" type="+-">Door des Heeren <rhyme label="b" type="m">geest</rhyme>,</l>
        <l id="s3:l3" met="6" type="+-">En hy nam // Godlijck bloet, en wiesch haer <rhyme label="a" type="m" corresp="#s3:l1">klaer</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">Soo dat yder <rhyme label="c" type="f">wonde</rhyme></l>
        <l id="s3:l5" met="4" type="+-">Oock van stonden aen <rhyme label="b" type="m" corresp="#s3:l2">geneest</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="6" type="+-">En hy deed // haer weer draghen 't heerlick <rhyme label="a" type="m">beeld</rhyme>:</l>
        <l id="s4:l2" met="3" type="+-">Dat sy eerst <rhyme label="b" type="m">verloor</rhyme>:</l>
        <l id="s4:l3" met="6" type="+-">Eenen kleedt // heeft hy haer oock mee <rhyme label="a" type="m" corresp="#s4:l1">gedeelt</rhyme>,</l>
        <l id="s4:l4" met="3" type="+-">Vol van <rhyme label="c" type="f">Hemels-stralen</rhyme></l>
        <l id="s4:l5" met="4" type="+-">Was 't door-weve, door en <rhyme label="b" type="m" corresp="#s4:l2">door</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="6" type="+-">Aldus blonck // sy gelijck de <rhyme label="a" type="m">Sonne-schijn</rhyme></l>
        <l id="s5:l2" met="3" type="+-">Op den middagh <rhyme label="b" type="m">doet</rhyme>:</l>
        <l id="s5:l3" met="6" type="+-">En hy schonck // tot haer spijse, Broodt, en <rhyme label="a" type="m" corresp="#s5:l1">Wijn</rhyme>,</l>
        <l id="s5:l4" met="3" type="+-">Afgedaelt van <rhyme label="c" type="f">d'Hemel</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Daerse Lijf en Ziel mee <rhyme label="b" type="m" corresp="#s5:l2">voedt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="6" type="+-">Hier mee brack // noch de vloedt van sijn <rhyme label="a" type="m">genaedt</rhyme></l>
        <l id="s6:l2" met="3" type="+-">Haren loop niet <rhyme label="b" type="m">of</rhyme>:</l>
        <l id="s6:l3" met="6" type="+-">Maer hy sprack: ghy sult inden <rhyme label="a" type="m" corresp="#s6:l1">Echten-staet</rhyme></l>
        <l id="s6:l4" met="3" type="+-">Met my eeuwigh <rhyme label="c" type="f">paren</rhyme></l>
        <l id="s6:l5" met="4" type="+-">Boven in mijn <rhyme label="b" type="m" corresp="#s6:l2">Hemels-Hof</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="6" type="+-">In wiens sael // dat ghy Bruyloft vieren <rhyme label="a" type="m">sult</rhyme>,</l>
        <l id="s7:l2" met="3" type="+-">Met een Hemels <rhyme label="b" type="m">sangh</rhyme>:</l>
        <l id="s7:l3" met="6" type="+-">Dit onthael, is met alle heyl <rhyme label="a" type="m" corresp="#s7:l1">vervult</rhyme>:</l>
        <l id="s7:l4" met="3" type="+-">Steun op dees <rhyme label="c" type="f">belofte</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Al u leve daghen <rhyme label="b" type="m" corresp="#s7:l2">langh</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="6" type="+-">Hier op gaf // hy haer tot een <rhyme label="a" type="m">onder-pant</rhyme></l>
        <l id="s8:l2" met="3" type="+-">'s Hemels soete <rhyme label="b" type="m">smaeck</rhyme>,</l>
        <l id="s8:l3" met="6" type="+-">En liet af // en gaf haer sijn <rhyme label="a" type="m" corresp="#s8:l1">Rechter-handt</rhyme>:</l>
        <l id="s8:l4" met="3" type="+-">Dus sloot Godt de <rhyme label="c" type="f">trouwe</rhyme>:</l>
        <l id="s8:l5" met="4" type="+-">Wel een wonderlicke <rhyme label="b" type="m" corresp="#s8:l2">saeck</rhyme>!</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="6" type="+-">En daer na // is sy altemet <rhyme label="a" type="m">verkracht</rhyme></l>
        <l id="s9:l2" met="3" type="+-">Van het weligh <rhyme label="b" type="m">vleys</rhyme>,</l>
        <l id="s9:l3" met="6" type="+-">Maer soo dra // als sy stort een droeve <rhyme label="a" type="m" corresp="#s9:l1">klacht</rhyme></l>
        <l id="s9:l4" met="3" type="+-">Aen haer trouwe <rhyme label="c" type="f">Minnaer</rhyme>,</l>
        <l id="s9:l5" met="4" type="+-">Reynight hy haer reys op <rhyme label="b" type="m" corresp="#s9:l2">reys</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="6" type="+-">Och hoe groot // is u goedtheyt, lieve <rhyme label="a" type="m">Heer</rhyme>!</l>
        <l id="s10:l2" met="3" type="+-">Die ghy hebt <rhyme label="b" type="m">betoont</rhyme>!</l>
        <l id="s10:l3" met="6" type="+-">Wt de doodt // bracht ghy ons in 't leven <rhyme label="a" type="m" corresp="#s10:l1">weer</rhyme>,</l>
        <l id="s10:l4" met="3" type="+-">En schonckt ons den <rhyme label="c" type="f">Hemel</rhyme>,</l>
        <l id="s10:l5" met="4" type="+-">Daer ghy selver heerlick <rhyme label="b" type="m" corresp="#s10:l2">woont</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="6" type="+-">Ghy mijn ziel // roemt gedurigh Godes <rhyme label="a" type="m">Lof</rhyme>,</l>
        <l id="s11:l2" met="3" type="+-">Wt uws herten <rhyme label="b" type="m">grondt</rhyme>:</l>
        <l id="s11:l3" met="6" type="+-">Soo t geviel // datse liet door swackheydt <rhyme label="a" type="m" corresp="#s11:l1">of</rhyme>,</l>
        <l id="s11:l4" met="3" type="+-">Segh dan:  Lieve <rhyme label="c" type="f">Heere</rhyme>!</l>
        <l id="s11:l5" met="4" type="+-">Opent weer mijn traghe <rhyme label="b" type="m" corresp="#s11:l2">mondt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

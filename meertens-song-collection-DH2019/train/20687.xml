  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">D'Alder-oudste Stad der <rhyme label="a" type="f">Steden</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Van het heerlijck' Hollands <rhyme label="b" type="m">pleyn</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Opgequeeckt in goede <rhyme label="a" type="f" corresp="#s1:l1">zeden</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">En in deughden geensins <rhyme label="b" type="m" corresp="#s1:l2">kleyn</rhyme>;</l>
        <l id="s1:l5" met="4" type="+-">Waer dat naeuw'lijcx yet aen <rhyme label="c" type="m">schort</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Is de e'ele Stad van <rhyme label="c" type="m" corresp="#s1:l5">Dordt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Binnen dese Stad <rhyme label="a" type="f">gebooren</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Is eertijds een Maeght <rhyme label="b" type="m">geweest</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Eene Maeght van God <rhyme label="a" type="f" corresp="#s2:l1">verkooren</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Voor wien Satan is <rhyme label="b" type="m" corresp="#s2:l2">bevreest</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Wiens eerwaerde naem valt <rhyme label="c" type="m">Suur</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Aen den Duyvel, t'allen <rhyme label="c" type="m" corresp="#s2:l5">uur</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Sura is dees Maeght <rhyme label="a" type="f">geheeten</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Sy viel suur aen 't helsch <rhyme label="b" type="m">gebroed</rhyme>.</l>
        <l id="s3:l3" met="4" type="+-">Evenwel soo moet ghy <rhyme label="a" type="f" corresp="#s3:l1">weten</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Datse in der daed was <rhyme label="b" type="m" corresp="#s3:l2">soet</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Sy was soet voor God haer <rhyme label="c" type="m">Heer</rhyme>;</l>
        <l id="s3:l6" met="4" type="+-">Sy Hem suur viel <rhyme label="c" type="m" corresp="#s3:l5">nimmermeer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Dese Maeght had all' haer <rhyme label="a" type="f">sinnen</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Op de Moeder Goods <rhyme label="b" type="m">gestelt</rhyme>;</l>
        <l id="s4:l3" met="4" type="+-">S' was tot d'arme vol van <rhyme label="a" type="f" corresp="#s4:l1">minne</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Sy heeft Haer by die <rhyme label="b" type="m" corresp="#s4:l2">verselt</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">All' haer winst, en all' haer <rhyme label="c" type="m">werck</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Gaf Sy d'Armen, en de <rhyme label="c" type="m" corresp="#s4:l5">kerck</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Als dees Maget wilden <rhyme label="a" type="f">bouwen</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Eenen Kerck tot Godes <rhyme label="b" type="m">eer</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">(Welcke nu noch staet <rhyme label="a" type="f" corresp="#s5:l1">behouwen</rhyme>)</l>
        <l id="s5:l4" met="4" type="+-">Soo quam Godes Engel <rhyme label="b" type="m" corresp="#s5:l2">ne'er</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Uyt den Hemel quam die <rhyme label="c" type="m">af</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">En hy Haer de groote <rhyme label="c" type="m" corresp="#s5:l5">gaf</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Na die groote heeft doen <rhyme label="a" type="f">maecken</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Sint Sura Godes <rhyme label="b" type="m">huys</rhyme>.</l>
        <l id="s6:l3" met="4" type="+-">Wat zijn dit voor vreemde <rhyme label="a" type="f" corresp="#s6:l1">saecken</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Sal hier dencken 't vuyl <rhyme label="b" type="m" corresp="#s6:l2">gespuys</rhyme>.</l>
        <l id="s6:l5" met="4" type="+-">'k Bidd' u vrinden, zijt niet <rhyme label="c" type="m">doof</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">'k Bidd' u, geeft mijn woord <rhyme label="c" type="m" corresp="#s6:l5">geloof</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Sura gaf de wercklie'n <rhyme label="a" type="f">looning</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Sy betaelden haer met <rhyme label="b" type="m">geld</rhyme>:</l>
        <l id="s7:l3" met="4" type="+-">Voor des Heeren fraeye <rhyme label="a" type="f" corresp="#s7:l1">wooningh</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Heeft Sy 't geld haer <rhyme label="b" type="m" corresp="#s7:l2">aengetelt</rhyme>:</l>
        <l id="s7:l5" met="4" type="+-">Kopkens was genaemt dees <rhyme label="c" type="m">munt</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Die Sy d'wercklie'n heeft <rhyme label="c" type="m" corresp="#s7:l5">vergunt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Hier door is dees Maeght <rhyme label="a" type="f">gekomen</rhyme></l>
        <l id="s8:l2" met="4" type="+-">In 't vermoe'n dat Sy was <rhyme label="b" type="m">rijck</rhyme>:</l>
        <l id="s8:l3" met="4" type="+-">En eylaes! daer wierd <rhyme label="a" type="f" corresp="#s8:l1">vernomen</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Dat hierom Sy wierd een <rhyme label="b" type="m" corresp="#s8:l2">Lijck</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">En van 't leven gantsch <rhyme label="c" type="m">ontbloot</rhyme></l>
        <l id="s8:l6" met="4" type="+-">Want-S' van Moorders wiert <rhyme label="c" type="m" corresp="#s8:l5">gedoodt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Dese Moorders zijn <rhyme label="a" type="f">gevangen</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Die Haer hadden <rhyme label="b" type="m">omgebracht</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">En veroordeelt om te <rhyme label="a" type="f" corresp="#s9:l1">hangen</rhyme>;</l>
        <l id="s9:l4" met="4" type="+-">Maer siet, Sura <rhyme label="b" type="m" corresp="#s9:l2">onwerwacht</rhyme></l>
        <l id="s9:l5" met="4" type="+-">Heeft dees Moorders by <rhyme label="c" type="m">gestaen</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">En genade doen <rhyme label="c" type="m" corresp="#s9:l5">ontfaen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">S' heeft vergiffenis <rhyme label="a" type="f">gekregen</rhyme></l>
        <l id="s10:l2" met="4" type="+-">Voor dit gruwelijck <rhyme label="b" type="m">misdaed</rhyme>.</l>
        <l id="s10:l3" met="4" type="+-">Och! dit dient niet stil <rhyme label="a" type="f" corresp="#s10:l1">geswegen</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">Want 't geschiet is t' onser <rhyme label="b" type="m" corresp="#s10:l2">baet</rhyme>.</l>
        <l id="s10:l5" met="4" type="+-">Ick bespeur hier uyt dat <rhyme label="c" type="m">Sy</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">Ons in 't sterven staen sal <rhyme label="c" type="m" corresp="#s10:l5">by</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Dit betrouw ick, Goods <rhyme label="a" type="f">vrindinne</rhyme>,</l>
        <l id="s11:l2" met="4" type="+-">Aldereelste Dordtsche <rhyme label="b" type="m">Maeght</rhyme>!</l>
        <l id="s11:l3" met="4" type="+-">'k Hoop door U te komen <rhyme label="a" type="f" corresp="#s11:l1">binnen</rhyme></l>
        <l id="s11:l4" met="4" type="+-">'s Hemels Hof, daer 't hart na <rhyme label="b" type="m" corresp="#s11:l2">jaeght</rhyme>:</l>
        <l id="s11:l5" met="4" type="+-">Bidt voor my den grooten <rhyme label="c" type="m">God</rhyme>,</l>
        <l id="s11:l6" met="4" type="+-">Dat den Hemel zy mijn <rhyme label="c" type="m" corresp="#s11:l5">lot</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

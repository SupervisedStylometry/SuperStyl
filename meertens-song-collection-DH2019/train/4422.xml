    <melody>Het was een klerkje dat ging ter school</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Johan Fruytiers</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">De vreese Gods die can hier <rhyme label="a" type="f">maken</rhyme>//</l>
        <l id="s1:l2" met="4" type="-+">dat men hier Gods geboden <rhyme label="b" type="m">leert</rhyme>//</l>
        <l id="s1:l3" met="4" type="-+">en datmen wijselijck in allen <rhyme label="a" type="f" corresp="#s1:l1">saken</rhyme>//</l>
        <l id="s1:l4" met="3" type="-+">hier handelt waermen <rhyme label="b" type="m" corresp="#s1:l2">verkeert</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Arghelist mach voor gheen wijsheyt <rhyme label="a" type="f">strecken</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Godtloose treken niet voor <rhyme label="b" type="m">cloeck</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Maer tis niet dan boosheyts <rhyme label="a" type="f" corresp="#s2:l1">ondecken</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En tot dwaesheyt schalck <rhyme label="b" type="m" corresp="#s2:l2">versoeck</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">De cleijne cloeckheyt met Godts <rhyme label="a" type="f">vreese</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Is beter dan de cloeckheyt <rhyme label="b" type="m">groot</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Met Godts verachtingh, schunt doch <rhyme label="a" type="f" corresp="#s3:l1">dese</rhyme></l>
        <l id="s3:l4" met="3" type="-+">want namaels werct sy <rhyme label="b" type="m" corresp="#s3:l2">aenstoot</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Menich scherpsinnich can list wel <rhyme label="a" type="f">saeijen</rhyme></l>
        <l id="s4:l2" met="4" type="-+">En is een schalck in boosheyt <rhyme label="b" type="m">milt</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">De rechte saken can hy <rhyme label="a" type="f" corresp="#s4:l1">verdraeijen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Ghelijck hy dat selfs hebben <rhyme label="b" type="m" corresp="#s4:l2">wilt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">De selfde schalck laet sijn hooft <rhyme label="a" type="f">hanghen</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">En slaet sijn ooghen op en <rhyme label="b" type="m">neer</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Ay luystert toe om v te <rhyme label="a" type="f" corresp="#s5:l1">vanghen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">waert ghijer eens, en coemt niet <rhyme label="b" type="m" corresp="#s5:l2">weer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Al is hy swack om te doen <rhyme label="a" type="f">hinder</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Loo neemt hy doch waer sijnen <rhyme label="b" type="m">tyt</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Daerom en acht hem oock niet <rhyme label="a" type="f" corresp="#s6:l1">minder</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Dan een die waerheyt <rhyme label="b" type="m" corresp="#s6:l2">bestrijt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Die aldus listich t'vernuft can <rhyme label="a" type="f">scherpen</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Is goet te kennen aen sijn <rhyme label="b" type="m">cleet</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Sijn ganck, en lachen hem v <rhyme label="a" type="f" corresp="#s7:l1">ontwerpen</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Schuut hem dan, ghy schuut v <rhyme label="b" type="m" corresp="#s7:l2">leet</rhyme>.</l>
      </lg>
    </lg>
  </text>

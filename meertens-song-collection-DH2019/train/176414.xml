  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Die een Liefje heeft <rhyme label="a" type="f">gevonden</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Die haar trouw en teer <rhyme label="b" type="m">bemind</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Loon de min met duizend <rhyme label="c" type="f">kussen</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Door een gloed nooit uit te <rhyme label="c" type="f" corresp="#s1:l3">blussen</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Zy haar trooster, zy haar <rhyme label="b" type="m" corresp="#s1:l2">vrind</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Doch om haar getrouw te <rhyme label="a" type="f">houden</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Sluit men ’t Liefje agter ’t <rhyme label="b" type="m">slot</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Want die loose Nimphjes <rhyme label="c" type="f">haaken</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Dag en nagt naar nieuwe <rhyme label="c" type="f" corresp="#s2:l3">zaaken</rhyme>:</l>
        <l id="s2:l5" met="4" type="+-">Al te veel naar vreemd <rhyme label="b" type="m" corresp="#s2:l2">genot</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Als de Maan begint te <rhyme label="a" type="f">schynen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Let een ieder op zyn <rhyme label="b" type="m">Vrouw</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Want die loose Minnaars <rhyme label="c" type="f">zugten</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Is ’t eind van al die <rhyme label="c" type="f" corresp="#s3:l3">klugten</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Goede nagt dan lieve <rhyme label="b" type="m" corresp="#s3:l2">Vrouw</rhyme>.</l>
      </lg>
    </lg>
  </text>

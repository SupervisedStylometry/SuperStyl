  <author>Leenaert Clock</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Zeer ootmoedich int hert <rhyme label="a" type="m">bereyt</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Comen wy voor u <rhyme label="a" type="m" corresp="#s1:l1">Majesteyt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">O Godt, u aen te <rhyme label="b" type="f">beden</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Met barmhertighen ooghen <rhyme label="c" type="m">siet</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Ons aen, en u ooren doch <rhyme label="c" type="m" corresp="#s1:l4">biet</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Nu tot onsen <rhyme label="b" type="f" corresp="#s1:l3">clachreden</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Doet open uwe milde <rhyme label="d" type="m">handt</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">Ghehoorsaem herten met <rhyme label="d" type="m" corresp="#s1:l7">verstanden</rhyme></l>
        <l id="s1:l9" met="3" type="-+">Gheheel reyn wilt ons <rhyme label="e" type="f">gheven</rhyme>,</l>
        <l id="s1:l10" met="4" type="-+">Die wy moghen opheffen <rhyme label="f" type="m">nu</rhyme>,</l>
        <l id="s1:l11" met="4" type="+-">O Heere Godt Vader, tot <rhyme label="f" type="m" corresp="#s1:l10">u</rhyme>,</l>
        <l id="s1:l12" met="3" type="-+">In den Hemel <rhyme label="e" type="f" corresp="#s1:l9">verheven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Alwaer wy hebben <rhyme label="a" type="m">ongheswaeckt</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Den Heylandt die ons salich <rhyme label="a" type="m" corresp="#s2:l1">maeckt</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Ter rechter handt <rhyme label="b" type="f">gheseten</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Christum uwen beminden <rhyme label="c" type="m">Soon</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Die ons gherecht te maken <rhyme label="c" type="m" corresp="#s2:l4">schoon</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Opvoet, alsoo wy <rhyme label="b" type="f" corresp="#s2:l3">weten</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Al waer wy hem met den <rhyme label="d" type="m">lichaem</rhyme></l>
        <l id="s2:l8" met="4" type="-+">Noch niet en moghen volghen <rhyme label="d" type="m" corresp="#s2:l7">t’saem</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Maer heeft beloeft te <rhyme label="e" type="f">vooren</rhyme></l>
        <l id="s2:l10" met="4" type="-+">Soo wy in sijne Naem ons <rhyme label="f" type="m">clacht</rhyme></l>
        <l id="s2:l11" met="4" type="+-">Doen, en u bidden met <rhyme label="f" type="m" corresp="#s2:l10">aendacht</rhyme></l>
        <l id="s2:l12" met="3" type="-+">Dat ghy ons sult <rhyme label="e" type="f" corresp="#s2:l9">verhooren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Nu wy ons blootheyt even <rhyme label="a" type="m">seer</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Verstaen en kennen, lieve <rhyme label="a" type="m" corresp="#s3:l1">Heer</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Soo gheeft ons int <rhyme label="b" type="f">benouwen</rhyme></l>
        <l id="s3:l4" met="4" type="-+">T’ghene hy ons heeft <rhyme label="c" type="m">toegheseyt</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Vervult den u <rhyme label="c" type="m" corresp="#s3:l4">barmherticheyt</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">In ons een vast <rhyme label="b" type="f" corresp="#s3:l3">betrouwen</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Dat wy doorgronden, nemen <rhyme label="d" type="m">acht</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">Hoe lief ghy’s Menschelijck <rhyme label="d" type="m" corresp="#s3:l7">gheslacht</rhyme></l>
        <l id="s3:l9" met="3" type="-+">Hebt, om gheven <rhyme label="e" type="f">ghenadich</rhyme>,</l>
        <l id="s3:l10" met="4" type="-+">Gheneghen en seer willich <rhyme label="f" type="m">zijt</rhyme>,</l>
        <l id="s3:l11" met="4" type="+-">Oock machtich in alles <rhyme label="f" type="m" corresp="#s3:l10">altijt</rhyme>,</l>
        <l id="s3:l12" met="3" type="-+">Volbringht het gantsch <rhyme label="e" type="f" corresp="#s3:l9">goetdadich</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">O Godt, maeckt doch ons herten <rhyme label="a" type="m">reyn</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Van aller ijdelheyt <rhyme label="a" type="m" corresp="#s4:l1">ghemeyn</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">En van der vyandts <rhyme label="b" type="f">laghen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Om niet anders te bidden <rhyme label="c" type="m">hoort</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Noch te begeeren <rhyme label="c" type="m" corresp="#s4:l4">rechte-voort</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Dan dat u doet <rhyme label="b" type="f" corresp="#s4:l3">behaghen</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Tot uwen prijs, en <rhyme label="d" type="m">salicheyt</rhyme></l>
        <l id="s4:l8" met="4" type="-+">Onse zielen, ons doch soo <rhyme label="d" type="m" corresp="#s4:l7">leyt</rhyme></l>
        <l id="s4:l9" met="3" type="-+">Int hert’ te zijn <rhyme label="e" type="f">ootmoedich</rhyme></l>
        <l id="s4:l10" met="4" type="-+">Op dat ons ghebedt tot u <rhyme label="f" type="m">com</rhyme></l>
        <l id="s4:l11" met="4" type="+-">Door die wolcken int <rhyme label="f" type="m" corresp="#s4:l10">heylichdom</rhyme>,</l>
        <l id="s4:l12" met="3" type="-+">Voor u lief Heere <rhyme label="e" type="f" corresp="#s4:l9">goedich</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Een verghevende hert ons <rhyme label="a" type="m">gheeft</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Teghens hem die ghesondicht <rhyme label="a" type="m" corresp="#s5:l1">heeft</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Aen ons, met <rhyme label="b" type="f">medelijden</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Sonder wederwrake te <rhyme label="c" type="m">doen</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Breeckt, slaet, vermorselt ons <rhyme label="c" type="m" corresp="#s5:l4">coen</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Ons herten t’allen <rhyme label="b" type="f" corresp="#s5:l3">tijden</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Om uytghestorte tranen <rhyme label="d" type="m">claer</rhyme></l>
        <l id="s5:l8" met="4" type="-+">Nu te weenen (O lieve <rhyme label="d" type="m" corresp="#s5:l7">Vader</rhyme>)</l>
        <l id="s5:l9" met="3" type="-+">Die u moghen <rhyme label="e" type="f">beweghen</rhyme>:</l>
        <l id="s5:l10" met="4" type="-+">Daer toe ons begeerte <rhyme label="f" type="m">vermeert</rhyme>,</l>
        <l id="s5:l11" met="4" type="+-">En ons gheneghentheyt nu <rhyme label="f" type="m" corresp="#s5:l10">keert</rhyme></l>
        <l id="s5:l12" met="3" type="-+">Met een ghemoedt <rhyme label="e" type="f" corresp="#s5:l9">versleghen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Heer een aendachtich wesen <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Met kinderlijcker liefden <rhyme label="a" type="m" corresp="#s6:l1">soet</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Om u als onsen <rhyme label="b" type="f">Vader</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Aen te roepen in Christi <rhyme label="c" type="m">naem</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Cracht en moghentheyt <rhyme label="c" type="m" corresp="#s6:l4">bequaem</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Seer groot, gheeft ons te <rhyme label="b" type="f" corresp="#s6:l3">gader</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">In welcx liefde ghy zijt <rhyme label="d" type="m">verheucht</rhyme>,</l>
        <l id="s6:l8" met="4" type="-+">Dat ghy ons niet ontsegghen <rhyme label="d" type="m" corresp="#s6:l7">meucht</rhyme></l>
        <l id="s6:l9" met="3" type="-+">Als wy nu Vader <rhyme label="e" type="f">beden</rhyme></l>
        <l id="s6:l10" met="4" type="-+">In sijnen Naem hy neem wech <rhyme label="f" type="m">vroet</rhyme></l>
        <l id="s6:l11" met="4" type="+-">Wat u aen ons mishaghen <rhyme label="f" type="m" corresp="#s6:l10">doet</rhyme>,</l>
        <l id="s6:l12" met="3" type="-+">Hy voorspreeckt ons met <rhyme label="e" type="f" corresp="#s6:l9">reden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Nu in sijnen Naem bidden <rhyme label="a" type="m">wy</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Om quijtscheldinghe, maeckt ons <rhyme label="a" type="m" corresp="#s7:l1">vry</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Vergheeft ons onse <rhyme label="b" type="f">zonden</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Lieve Vader vergheeft ons <rhyme label="c" type="m">doch</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">In Christi naem bidden wy <rhyme label="c" type="m" corresp="#s7:l4">noch</rhyme></l>
        <l id="s7:l6" met="3" type="-+">V lieve Soon <rhyme label="b" type="f" corresp="#s7:l3">bevonden</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">Nu ghy ons Schepper zijt <rhyme label="d" type="m">belooft</rhyme>,</l>
        <l id="s7:l8" met="4" type="-+">Die ons t’leven en adem <rhyme label="d" type="m" corresp="#s7:l7">gheeft</rhyme>,</l>
        <l id="s7:l9" met="3" type="-+">Wilt onse leven <rhyme label="e" type="f">stieren</rhyme></l>
        <l id="s7:l10" met="4" type="-+">Tot der salicheyt <rhyme label="f" type="m">triumphant</rhyme>,</l>
        <l id="s7:l11" met="4" type="+-">Want het staet al in uwe <rhyme label="f" type="m" corresp="#s7:l10">handt</rhyme>,</l>
        <l id="s7:l12" met="3" type="-+">Richt dat recht <rhyme label="e" type="f" corresp="#s7:l9">goedertieren</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Maer, O Godt, alst aerdsche <rhyme label="a" type="m">ghebauw</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Dorr’ blijft sonder reghen en <rhyme label="a" type="m" corresp="#s8:l1">dauw</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Altijdt vroech ende <rhyme label="b" type="f">spade</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Alsoo blijven wy <rhyme label="c" type="m">onvruchtbaer</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">En moesten verdorren te <rhyme label="c" type="m" corresp="#s8:l4">gaer</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Sonder uwe <rhyme label="b" type="f" corresp="#s8:l3">ghenade</rhyme>,</l>
        <l id="s8:l7" met="4" type="-+">Met Hemelschen dauw ons <rhyme label="d" type="m">begiet</rhyme></l>
        <l id="s8:l8" met="4" type="-+">Op dat wy groeyen datment <rhyme label="d" type="m" corresp="#s8:l7">siet</rhyme>,</l>
        <l id="s8:l9" met="3" type="-+">Dits onse bede <rhyme label="e" type="f">clachtich</rhyme></l>
        <l id="s8:l10" met="4" type="-+">In Christi naem <rhyme label="f" type="m">ghebenedijt</rhyme></l>
        <l id="s8:l11" met="4" type="+-">Verhoort doch Heer, en ons <rhyme label="f" type="m" corresp="#s8:l10">verblijt</rhyme>,</l>
        <l id="s8:l12" met="3" type="-+">Door u moghentheyt <rhyme label="e" type="f" corresp="#s8:l9">crachtich</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Met uwer wijsheyt ons <rhyme label="a" type="m">verlicht</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Dat wy vercrijghen recht <rhyme label="a" type="m" corresp="#s9:l1">ghesicht</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Dat die ons mach <rhyme label="b" type="f">voortreden</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Die een bystandtster is <rhyme label="c" type="m">bekent</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Dees ons uyt des Hemels throon <rhyme label="c" type="m" corresp="#s9:l4">sendt</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Op Aerden hier <rhyme label="b" type="f" corresp="#s9:l3">beneden</rhyme>,</l>
        <l id="s9:l7" met="4" type="-+">Dat sy hier met ons zy, en <rhyme label="d" type="m">sterck</rhyme>,</l>
        <l id="s9:l8" met="4" type="-+">En help volvoeren al ons <rhyme label="d" type="m" corresp="#s9:l7">werck</rhyme>,</l>
        <l id="s9:l9" met="3" type="-+">Sonder dees gaef met <rhyme label="e" type="f">namen</rhyme></l>
        <l id="s9:l10" met="4" type="-+">Wy u niet aenghenaem en <rhyme label="f" type="m">zijn</rhyme>,</l>
        <l id="s9:l11" met="4" type="+-">In Christi Iesu name <rhyme label="f" type="m" corresp="#s9:l10">fijn</rhyme></l>
        <l id="s9:l12" met="3" type="-+">Bidden wy dit te <rhyme label="e" type="f" corresp="#s9:l9">samen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Nu wy met  angste zijn <rhyme label="a" type="m">beswaert</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Bidden wy uyt kindtlijcker <rhyme label="a" type="m" corresp="#s10:l1">aert</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Toont ons u <rhyme label="b" type="f">aenghesichte</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">O Heer, soo worden wy <rhyme label="c" type="m">ghesont</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Op dat wy’t moghen alle <rhyme label="c" type="m" corresp="#s10:l4">stont</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Aenschouwen als  <rhyme label="b" type="f" corresp="#s10:l3">verlichte</rhyme>,</l>
        <l id="s10:l7" met="4" type="-+">Ons salicheyt daer in <rhyme label="d" type="m">berust</rhyme>,</l>
        <l id="s10:l8" met="4" type="-+">Dit goet ghemeten nu met <rhyme label="d" type="m" corresp="#s10:l7">lust</rhyme></l>
        <l id="s10:l9" met="3" type="-+">Al heylighe en <rhyme label="e" type="f">vromen</rhyme>,</l>
        <l id="s10:l10" met="4" type="-+">Laet ons dit oock ghenieten <rhyme label="f" type="m">Godt</rhyme>,</l>
        <l id="s10:l11" met="4" type="+-">In Christi name voor het <rhyme label="f" type="m" corresp="#s10:l10">slot</rhyme></l>
        <l id="s10:l12" met="3" type="-+">Wilt ons te hulpe <rhyme label="e" type="f" corresp="#s10:l9">comen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

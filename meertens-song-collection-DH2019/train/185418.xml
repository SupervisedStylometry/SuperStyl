  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Godt sent zijn Boden <rhyme label="a" type="m">soet</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Daer hy vint een <rhyme label="a" type="m" corresp="#s1:l1">ghemoet</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Oprecht, en soet van <rhyme label="b" type="f">grondt</rhyme>:</l>
        <l id="s1:l4" met="3" type="-+">Maer daer hy ‘t herte <rhyme label="c" type="m">vint</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Weerspannich en <rhyme label="c" type="m" corresp="#s1:l4">verblint</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Wijckt hy tot allen <rhyme label="b" type="f" corresp="#s1:l3">stonde</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">‘t Kley-achtich <rhyme label="a" type="m">Asia</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Cout, vochtich voor en <rhyme label="a" type="m" corresp="#s2:l1">na</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">‘t Zaet Gods niet can <rhyme label="b" type="f">ontfanghen</rhyme>:</l>
        <l id="s2:l4" met="3" type="-+">Onvruchtbaer is den <rhyme label="c" type="m">grondt</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Daerom des Heeren <rhyme label="c" type="m" corresp="#s2:l4">mont</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Neemt elders waer syn <rhyme label="b" type="f" corresp="#s2:l3">ganghen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Mysia vol <rhyme label="a" type="m">schandael</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">En grouwel <rhyme label="a" type="m" corresp="#s3:l1">altemael</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Wil met Gods aerdt niet <rhyme label="b" type="f">paren</rhyme>:</l>
        <l id="s3:l4" met="3" type="-+">Daerom den Geest <rhyme label="c" type="m">ghebiet</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Aldaer te comen <rhyme label="c" type="m" corresp="#s3:l4">niet</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Sijn ghetrouwe <rhyme label="b" type="f" corresp="#s3:l3">dienaren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Macedonia, <rhyme label="a" type="m">schier</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Ontsteken als een <rhyme label="a" type="m" corresp="#s4:l1">vier</rhyme></l>
        <l id="s4:l3" met="3" type="-+">In brant der soeter <rhyme label="b" type="f">minnen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Treckt door zijnen <rhyme label="c" type="m">Magneet</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Tot hem Godts <rhyme label="c" type="m" corresp="#s4:l4">secreet</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Den Geest wil wel daer <rhyme label="b" type="f" corresp="#s4:l3">binnen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Aldaer is <rhyme label="a" type="m">Lidia</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Een Moeder vol <rhyme label="a" type="m" corresp="#s5:l1">ghena</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Gheboortich voor den <rhyme label="b" type="f">Heere</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Soo haest sy Pauli <rhyme label="c" type="m">woort</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Opmerckigh heeft <rhyme label="c" type="m" corresp="#s5:l4">ghehoort</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">‘t Hert ontsluyt door zijn <rhyme label="b" type="f" corresp="#s5:l3">Leere</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">‘t Woort Christi haer kracht <rhyme label="a" type="m">heeft</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Wat my de Vader <rhyme label="a" type="m" corresp="#s6:l1">geeft</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Wat sal tot my <rhyme label="b" type="f">incomen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">En wie tot my <rhyme label="c" type="m">ghenaeckt</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Wert van my niet <rhyme label="c" type="m" corresp="#s6:l4">ghewraeckt</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Maer Lief’lijck <rhyme label="b" type="f" corresp="#s6:l3">aengenomen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Gods diensticheyt <rhyme label="a" type="m">bequaem</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Is Godt seer <rhyme label="a" type="m" corresp="#s7:l1">aenghenaem</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Lidia met den <rhyme label="b" type="f">Vrouwen</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Oeffenden in ‘t <rhyme label="c" type="m">ghebedt</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">En kreghen goet <rhyme label="c" type="m" corresp="#s7:l4">ontset</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Door Pauli soet <rhyme label="b" type="f" corresp="#s7:l3">aenschouwen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Sulck moederlijck <rhyme label="a" type="m">ghemoet</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Wert door Gods Geest <rhyme label="a" type="m" corresp="#s8:l1">gevoet</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">En deelachtich Gods <rhyme label="b" type="f">Rijcke</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Godt die de zijne <rhyme label="c" type="m">kent</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Brenghts’ al in zijn <rhyme label="c" type="m" corresp="#s8:l4">convent</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Die syn van sijns <rhyme label="b" type="f" corresp="#s8:l3">ghelijcke</rhyme>.</l>
      </lg>
    </lg>
  </text>

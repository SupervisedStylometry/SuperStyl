    <melody>Wir glauben all an einen Gott</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Jacobus Revius</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="5" type="-+">VVY stellen ons' gelove <rhyme label="a" type="m">vastelijck</rhyme></l>
        <l id="s1:l2" met="4" type="-+">In God den Vader, <rhyme label="b" type="f">al-vermogend'</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Die aerde schiep en <rhyme label="a" type="m" corresp="#s1:l1">hemelrijck</rhyme>:</l>
        <l id="s1:l4" met="4" type="-+">Oock, als een vader <rhyme label="b" type="f" corresp="#s1:l2">mede-dogend'</rhyme></l>
        <l id="s1:l5" met="4" type="+-">Alle tijt ons wil <rhyme label="c" type="f">geneeren</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Lijf en ziele wel <rhyme label="d" type="f">bewaren</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Allen onheyl van ons <rhyme label="c" type="f" corresp="#s1:l5">weeren</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Geen verderf sal ons <rhyme label="d" type="f" corresp="#s1:l6">beswaren</rhyme>.</l>
        <l id="s1:l9" met="5" type="+-">Hy bewaket ons dach ende <rhyme label="e" type="m">nacht</rhyme>,</l>
        <l id="s1:l10" met="4" type="-+">En alles staet in syner <rhyme label="e" type="m" corresp="#s1:l9">macht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="5" type="-+">Wy stellen ons geloof <rhyme label="a" type="m">oprechtelijck</rhyme></l>
        <l id="s2:l2" met="4" type="-+">In Iesum Christum onsen <rhyme label="b" type="f">Heere</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Syn eenich Soone, hem <rhyme label="a" type="m" corresp="#s2:l1">gelijck</rhyme></l>
        <l id="s2:l4" met="4" type="-+">In eeuwich wesen, macht, en <rhyme label="b" type="f" corresp="#s2:l2">eere</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Vanden Heyl'gen Geest <rhyme label="c" type="f">ontfangen</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Wt de reyne maecht <rhyme label="d" type="f">geboren</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Na veel lijdens, <rhyme label="c" type="f" corresp="#s2:l5">opgehangen</rhyme></l>
        <l id="s2:l8" met="4" type="+-">Aen het cruys, om Godes <rhyme label="d" type="f" corresp="#s2:l6">toren</rhyme></l>
        <l id="s2:l9" met="5" type="+-">Te versoenen: oock gedoot, int <rhyme label="e" type="m">graf</rhyme></l>
        <l id="s2:l10" met="4" type="-+">Geleyt, gedaelt ter hellen <rhyme label="e" type="m" corresp="#s2:l9">af</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="5" type="-+">Ten derden daeg' in grooter <rhyme label="a" type="m">majesteyt</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Weer vanden dooden <rhyme label="b" type="f">opgeresen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Op dat van syn <rhyme label="a" type="m" corresp="#s3:l1">rechtveerdicheyt</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Wy tsaem deelachtich mochten <rhyme label="b" type="f" corresp="#s3:l2">wesen</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Is ten hemel <rhyme label="c" type="f">opgenomen</rhyme></l>
        <l id="s3:l6" met="4" type="+-">En gescheyden vande <rhyme label="d" type="f">aerde</rhyme>.</l>
        <l id="s3:l7" met="4" type="+-">Aen Gods rechterhant <rhyme label="c" type="f" corresp="#s3:l5">gecomen</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Daer hy sit in hoochster <rhyme label="d" type="f" corresp="#s3:l6">waerde</rhyme>,</l>
        <l id="s3:l9" met="5" type="+-">En van daer sal comen 'smenschen <rhyme label="e" type="m">Soon</rhyme></l>
        <l id="s3:l10" met="4" type="-+">Te richten levenden en <rhyme label="e" type="m" corresp="#s3:l9">doo'n</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="5" type="-+">Wy stellen ons geloof in God den <rhyme label="a" type="m">Geest</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Een met den Soone en den <rhyme label="b" type="f">Vader</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Van alle eeuwicheyt <rhyme label="a" type="m" corresp="#s4:l1">geweest</rhyme>.</l>
        <l id="s4:l4" met="4" type="-+">Hy brengt de heyl'ge kerck te <rhyme label="b" type="f" corresp="#s4:l2">gader</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Die in plaetsen ende <rhyme label="c" type="f">tijden</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Algemeyn men moet <rhyme label="d" type="f">belijden</rhyme>.</l>
        <l id="s4:l7" met="4" type="+-">De gemeenschap van Gods <rhyme label="c" type="f" corresp="#s4:l5">erven</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Die vergiffenis <rhyme label="d" type="f" corresp="#s4:l6">verwerven</rhyme>;</l>
        <l id="s4:l9" met="5" type="+-">En, na deses vleeschs <rhyme label="e" type="m">verrijsenis</rhyme>,</l>
        <l id="s4:l10" met="4" type="-+">Een leven dat oneyndich <rhyme label="e" type="m" corresp="#s4:l9">is</rhyme>.</l>
      </lg>
    </lg>
  </text>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">V wel bequame // <rhyme label="a" type="m">Bruydt</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">Door uwen Name // <rhyme label="a" type="m" corresp="#s1:l1">uyt</rhyme></l>
        <l id="s1:l3" met="3" type="+-">Helpt rechten wonder // <rhyme label="b" type="f">dinghen</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">In u macht, stercken // <rhyme label="c" type="m">Heldt</rhyme>,</l>
        <l id="s1:l5" met="3" type="+-">Men 'svyandts wercken // <rhyme label="c" type="m" corresp="#s1:l4">velt</rhyme>,</l>
        <l id="s1:l6" met="3" type="+-">En al kan t'onder // <rhyme label="b" type="f" corresp="#s1:l3">bringhen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">In uwe groote // <rhyme label="a" type="m">macht</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">Eer ick de bloote // <rhyme label="a" type="m" corresp="#s2:l1">slacht</rhyme>,</l>
        <l id="s2:l3" met="3" type="+-">Helpt my toerusten // <rhyme label="b" type="f">stadigh</rhyme>.</l>
        <l id="s2:l4" met="3" type="+-">Want tis van noode // <rhyme label="c" type="m">wel</rhyme>,</l>
        <l id="s2:l5" met="3" type="+-">Op dat ick doode // <rhyme label="c" type="m" corresp="#s2:l4">snel</rhyme></l>
        <l id="s2:l6" met="3" type="+-">Altijdts de lusten // <rhyme label="b" type="f" corresp="#s2:l3">schadigh</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">T'gheloove t'eenen // <rhyme label="a" type="m">schilt</rhyme></l>
        <l id="s3:l2" met="3" type="+-">My altijdts leenen // <rhyme label="a" type="m" corresp="#s3:l1">wilt</rhyme>,</l>
        <l id="s3:l3" met="3" type="+-">Want meer dan stalich // <rhyme label="b" type="f">desen</rhyme></l>
        <l id="s3:l4" met="3" type="+-">My dient in elcken // <rhyme label="c" type="m">tijdt</rhyme>,</l>
        <l id="s3:l5" met="3" type="+-">En oock in welcken // <rhyme label="c" type="m" corresp="#s3:l4">strijdt</rhyme>,</l>
        <l id="s3:l6" met="3" type="+-">De hop' om saligh // <rhyme label="b" type="f" corresp="#s3:l3">wesen</rhyme>,</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">Dien Hellem vryde // <rhyme label="a" type="m">my</rhyme></l>
        <l id="s4:l2" met="3" type="+-">Oock aen mijn zijde // <rhyme label="a" type="m" corresp="#s4:l1">zy</rhyme></l>
        <l id="s4:l3" met="3" type="+-">'sGheests zweert, de waerheyt // <rhyme label="b" type="f">mede</rhyme>,</l>
        <l id="s4:l4" met="3" type="+-">Tis eenen goeden // <rhyme label="c" type="m">Kreeft</rhyme>,</l>
        <l id="s4:l5" met="3" type="+-">Die reyn ghemoeden // <rhyme label="c" type="m" corresp="#s4:l4">gheeft</rhyme>,</l>
        <l id="s4:l6" met="3" type="+-">In suyver klaerheyt // <rhyme label="b" type="f" corresp="#s4:l3">vrede</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="+-">In liefde vyerigh // <rhyme label="a" type="m">wis</rhyme></l>
        <l id="s5:l2" met="3" type="+-">Die goedertierigh  // <rhyme label="a" type="m" corresp="#s5:l1">is</rhyme>,</l>
        <l id="s5:l3" met="3" type="+-">Wilt my rechtsinnigh // <rhyme label="b" type="f">gorden</rhyme>,</l>
        <l id="s5:l4" met="3" type="+-">Mach sy my blyven // <rhyme label="c" type="m">by</rhyme>,</l>
        <l id="s5:l5" met="3" type="+-">Ick sal beklyven // <rhyme label="c" type="m" corresp="#s5:l4">vry</rhyme>,</l>
        <l id="s5:l6" met="3" type="+-">En overwinningh // <rhyme label="b" type="f" corresp="#s5:l3">worden</rhyme>.</l>
      </lg>
    </lg>
  </text>

<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>33537</id>
    <date>
      <year-start>1614</year-start>
      <year-end>1614</year-end>
    </date>
    <tags>
      <tag standard-name="bespiegelend lied" translation="reflective song">bespiegelend lied</tag>
      <tag standard-name="loflied" translation="praise song">loflied</tag>
    </tags>
    <melody>Een ridder en een meisje jong</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Rumoldus Batavus</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Ghy vrome Christenen <rhyme label="a" type="f">wtvercoren</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Die hier nu leeft na Christus <rhyme label="b" type="m">raet</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Denct hoe ghenuechelyck salt zyn te <rhyme label="a" type="f" corresp="#s1:l1">hooren</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Alsmen in Gods glorie <rhyme label="b" type="m" corresp="#s1:l2">gaet</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ende als wy daer sullen <rhyme label="a" type="f">ontfangen</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Dat ons van eeuwicheyt was <rhyme label="b" type="m">bereyt</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Al die zyn weghen hier hebben <rhyme label="a" type="f" corresp="#s2:l1">gheganghen</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Is dese vruechden eeuwich <rhyme label="b" type="m" corresp="#s2:l2">bereydt</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Wie en soude hier niet weynich <rhyme label="a" type="f">achten</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Die ydele vruecht deser werelt <rhyme label="b" type="m">sodt</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Om zulcke glorie als wy <rhyme label="a" type="f" corresp="#s3:l1">verwachten</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Voor die hier dienen onsen <rhyme label="b" type="m" corresp="#s3:l2">Godt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Die werelt loont zoo <rhyme label="a" type="f">bitterlijcken</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Haer vruecht die is oock haest <rhyme label="b" type="m">ghedaen</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Maer Gods glorij duert <rhyme label="a" type="f" corresp="#s4:l1">eeuwelijcken</rhyme></l>
        <l id="s4:l4" met="4" type="-+">En zal oock nimmermeer niet <rhyme label="b" type="m" corresp="#s4:l2">vergaen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Dat huys daermen zal eeuwich <rhyme label="a" type="f">woonen</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Is alzoo hooch, ende oock zoo <rhyme label="b" type="m">schoon</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Haer vruecht wy hier niet wtspreecken <rhyme label="a" type="f" corresp="#s5:l1">conen</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Dat Godt sal gheuen voor eenen <rhyme label="b" type="m" corresp="#s5:l2">loon</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Die in zyn wingaert heeft gaen <rhyme label="a" type="f">arbeyden</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Al hier beneden int aertsche <rhyme label="b" type="m">dal</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Voor dien zo zal hy doen <rhyme label="a" type="f" corresp="#s6:l1">bereyden</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Een waerscap die daer eeuwich dueren <rhyme label="b" type="m" corresp="#s6:l2">sal</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Och broeders laet ons toch hier na <rhyme label="a" type="f">trachten</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Om te woonen daer in Gods <rhyme label="b" type="m">huys</rhyme></l>
        <l id="s7:l3" met="4" type="-+">En Gods gheboden laet ons <rhyme label="a" type="f" corresp="#s7:l1">opwachten</rhyme></l>
        <l id="s7:l4" met="4" type="-+">En houden die werelt voor eenen <rhyme label="b" type="m" corresp="#s7:l2">cruys</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Gheen ooge en heeft het oyt <rhyme label="a" type="f">bekeecken</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Noch oore en heeft het oyt <rhyme label="b" type="m">gehoort</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Gheen mont en cant oock niet <rhyme label="a" type="f" corresp="#s8:l1">wtspreecken</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Noch gheen hert en denckt dit rechte <rhyme label="b" type="m" corresp="#s8:l2">voort</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Daer zult ghy O ziele gaen <rhyme label="a" type="f">aenschouwen</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Die v selfs gheschapen <rhyme label="b" type="m">heeft</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">En alle vromen haer op <rhyme label="a" type="f" corresp="#s9:l1">betrouwen</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Oock alle sielen het leuen <rhyme label="b" type="m" corresp="#s9:l2">gheeft</rhyme>,</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Godt den Vader van grooter <rhyme label="a" type="f">crachten</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Ende oock mede zynen <rhyme label="b" type="m">Soon</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Den H. Gheest van eender <rhyme label="a" type="f" corresp="#s10:l1">machten</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Al eenen Godt, ende drie <rhyme label="b" type="m" corresp="#s10:l2">persoon</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">O ziel, hoe sult ghy dan <rhyme label="a" type="f">Iubileren</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Als ghy v schepper aenschouwen <rhyme label="b" type="m">zult</rhyme></l>
        <l id="s11:l3" met="4" type="-+">En woonen altoos int huys ws <rhyme label="a" type="f" corresp="#s11:l1">heeren</rhyme></l>
        <l id="s11:l4" met="4" type="-+">En worden van zyn glorij <rhyme label="b" type="m" corresp="#s11:l2">vervult</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Ghy zult v dan niet <rhyme label="a" type="f">bedroeuen</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Als ghy zyn claerheyt daer nu <rhyme label="b" type="m">sicht</rhyme></l>
        <l id="s12:l3" met="4" type="-+">Want Son, noch Maen salmen daer <rhyme label="a" type="f" corresp="#s12:l1">behoeven</rhyme></l>
        <l id="s12:l4" met="4" type="-+">Het lammeken is daer haer <rhyme label="b" type="m" corresp="#s12:l2">licht</rhyme>,</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Dat staet aldaer seer hooch <rhyme label="a" type="f">verheuen</rhyme></l>
        <l id="s13:l2" met="4" type="-+">Op den berch van Sion <rhyme label="b" type="m">claer</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">En doet zyn schoonheyt rontsom daer <rhyme label="a" type="f" corresp="#s13:l1">geuen</rhyme></l>
        <l id="s13:l4" met="4" type="-+">Meer of daer duysent Sonnen <rhyme label="b" type="m" corresp="#s13:l2">waer</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Voorts zo machmen daer <rhyme label="a" type="f">speculeren</rhyme></l>
        <l id="s14:l2" met="4" type="-+">In alle cierheyt dat daer <rhyme label="b" type="m">verthoont</rhyme></l>
        <l id="s14:l3" met="4" type="-+">Als in Maria die moeder ons <rhyme label="a" type="f" corresp="#s14:l1">Heeren</rhyme></l>
        <l id="s14:l4" met="4" type="-+">Die daer seer heerlycken is <rhyme label="b" type="m" corresp="#s14:l2">ghecroont</rhyme></l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Sy is aldaer die <rhyme label="a" type="f">Coninginne</rhyme></l>
        <l id="s15:l2" met="4" type="-+">Die den hemel zeer schoon <rhyme label="b" type="m">verciert</rhyme></l>
        <l id="s15:l3" met="4" type="-+">Bouen al d’Engelen, en <rhyme label="a" type="f" corresp="#s15:l1">Seraphynen</rhyme></l>
        <l id="s15:l4" met="4" type="-+">Is sy door glorie <rhyme label="b" type="m" corresp="#s15:l2">gheschockiert</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Dan haer soo machmen gaen <rhyme label="a" type="f">speculeren</rhyme></l>
        <l id="s16:l2" met="4" type="-+">Door alle graden int hemels <rhyme label="b" type="m">hof</rhyme></l>
        <l id="s16:l3" met="4" type="-+">Als Patriarchen, en Propheten des <rhyme label="a" type="f" corresp="#s16:l1">Heeren</rhyme></l>
        <l id="s16:l4" met="4" type="-+">Die Godt altsamen daer geuen <rhyme label="b" type="m" corresp="#s16:l2">lof</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Daer siet ghy Adam ons eersten <rhyme label="a" type="f">Vader</rhyme></l>
        <l id="s17:l2" met="4" type="-+">Oock Abel, Noe, ende <rhyme label="b" type="m">Abraham</rhyme></l>
        <l id="s17:l3" met="4" type="-+">Moyses, Dauidt, en <rhyme label="a" type="f" corresp="#s17:l1">allegader</rhyme>,</l>
        <l id="s17:l4" met="4" type="-+">Die door Gods gratie ten hemel <rhyme label="b" type="m" corresp="#s17:l2">quam</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">D’Apostelen canmen mede <rhyme label="a" type="f">aenschouwen</rhyme></l>
        <l id="s18:l2" met="4" type="-+">Met die Euangelisten, en Heders <rhyme label="b" type="m">goet</rhyme></l>
        <l id="s18:l3" met="4" type="-+">Die Christus kercke hebben doen <rhyme label="a" type="f" corresp="#s18:l1">bouwen</rhyme></l>
        <l id="s18:l4" met="4" type="-+">En hy ghecost heeft met zynen <rhyme label="b" type="m" corresp="#s18:l2">bloet</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">Hy can oock mercken zo veele <rhyme label="a" type="f">scharen</rhyme></l>
        <l id="s19:l2" met="4" type="-+">Die haer niet en hebben <rhyme label="b" type="m">verschoont</rhyme></l>
        <l id="s19:l3" met="4" type="-+">En zyn ghestoruen al <rhyme label="a" type="f" corresp="#s19:l1">martelaren</rhyme></l>
        <l id="s19:l4" met="4" type="-+">Die daer al heerlyck worden <rhyme label="b" type="m" corresp="#s19:l2">ghecroont</rhyme></l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">Noch zoo sietmen daer veel <rhyme label="a" type="f">ionc-vrouwen</rhyme></l>
        <l id="s20:l2" met="4" type="-+">Die haer wellusten hebben <rhyme label="b" type="m">versmaet</rhyme></l>
        <l id="s20:l3" met="4" type="-+">En in suyuerheyt haer hebben <rhyme label="a" type="f" corresp="#s20:l1">ghehouwen</rhyme></l>
        <l id="s20:l4" met="4" type="-+">Nu volgen zy t’lammeken al waer het <rhyme label="b" type="m" corresp="#s20:l2">gaet</rhyme>.</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="4" type="-+">Sy sien daer mede veel <rhyme label="a" type="f">Confessooren</rhyme></l>
        <l id="s21:l2" met="4" type="-+">En Religieusen in groot <rhyme label="b" type="m">ghetal</rhyme>,</l>
        <l id="s21:l3" met="4" type="-+">Met veel Priesters, ende <rhyme label="a" type="f" corresp="#s21:l1">Doctooren</rhyme></l>
        <l id="s21:l4" met="4" type="-+">Elck nae verdiensten daer blincken <rhyme label="b" type="m" corresp="#s21:l2">zal</rhyme>.</l>
      </lg>
      <lg id="s22" type="stanza">
        <l id="s22:l1" met="4" type="-+">Noch zo sietmen daer veele <rhyme label="a" type="f">persoonen</rhyme></l>
        <l id="s22:l2" met="4" type="-+">Van mannen ende van vrouwen <rhyme label="b" type="m">fijn</rhyme></l>
        <l id="s22:l3" met="4" type="-+">Die daer nu dragen al sulcke <rhyme label="a" type="f" corresp="#s22:l1">croonen</rhyme></l>
        <l id="s22:l4" met="4" type="-+">Soo sy by Godt daer waerdich <rhyme label="b" type="m" corresp="#s22:l2">sijn</rhyme>.</l>
      </lg>
      <lg id="s23" type="stanza">
        <l id="s23:l1" met="4" type="-+">Want niemant zal daer in <rhyme label="a" type="f">murmureren</rhyme></l>
        <l id="s23:l2" met="4" type="-+">Al heeft een ander een schoonder <rhyme label="b" type="m">kroon</rhyme></l>
        <l id="s23:l3" met="4" type="-+">Sy kennen al de rechtueerdicheyt ons <rhyme label="a" type="f" corresp="#s23:l1">Heeren</rhyme></l>
        <l id="s23:l4" met="4" type="-+">Die daer een yder gheeft zynen <rhyme label="b" type="m" corresp="#s23:l2">loon</rhyme></l>
      </lg>
      <lg id="s24" type="stanza">
        <l id="s24:l1" met="4" type="-+">O ziel ghedenckt toch deser <rhyme label="a" type="f">Feesten</rhyme></l>
        <l id="s24:l2" met="4" type="-+">Die v hier namaels gebueren <rhyme label="b" type="m">sal</rhyme></l>
        <l id="s24:l3" met="4" type="-+">Om daer te wesen onder die <rhyme label="a" type="f" corresp="#s24:l1">gheesten</rhyme></l>
        <l id="s24:l4" met="4" type="-+">Waer menich duysent is in <rhyme label="b" type="m" corresp="#s24:l2">ghetal</rhyme>.</l>
      </lg>
      <lg id="s25" type="stanza">
        <l id="s25:l1" met="4" type="-+">Daer zijn Gods Engelen, die <rhyme label="a" type="f">virtuten</rhyme></l>
        <l id="s25:l2" met="4" type="-+">Oock dominarien, en throonen <rhyme label="b" type="m">schoon</rhyme></l>
        <l id="s25:l3" met="4" type="-+">Die daer op Herpen, ende mede op <rhyme label="a" type="f" corresp="#s25:l1">Luyten</rhyme></l>
        <l id="s25:l4" met="4" type="-+">Altoos speelen een schoonen <rhyme label="b" type="m" corresp="#s25:l2">thoon</rhyme>.</l>
      </lg>
      <lg id="s26" type="stanza">
        <l id="s26:l1" met="4" type="-+">Daer zijn Archengelen, en <rhyme label="a" type="f">Princepaten</rhyme></l>
        <l id="s26:l2" met="4" type="-+">Elck Cerubim, ende <rhyme label="b" type="m">Seraphim</rhyme></l>
        <l id="s26:l3" met="4" type="-+">Die daer altoos sonder <rhyme label="a" type="f" corresp="#s26:l1">aflaten</rhyme></l>
        <l id="s26:l4" met="4" type="-+">In Gods liefde brandende <rhyme label="b" type="m" corresp="#s26:l2">zin</rhyme>,</l>
      </lg>
      <lg id="s27" type="stanza">
        <l id="s27:l1" met="4" type="-+">Seer veele duysenden van <rhyme label="a" type="f">ghetaelen</rhyme></l>
        <l id="s27:l2" met="4" type="-+">Staen daer O Heer voor uwen <rhyme label="b" type="m">throon</rhyme></l>
        <l id="s27:l3" met="4" type="-+">O daer haer vruecht ende blijschap <rhyme label="a" type="f" corresp="#s27:l1">haelen</rhyme></l>
        <l id="s27:l4" met="4" type="-+">O Godt wt uwen aenschijn <rhyme label="b" type="m" corresp="#s27:l2">schoon</rhyme>.</l>
      </lg>
      <lg id="s28" type="stanza">
        <l id="s28:l1" met="4" type="-+">Hoe ghenuechelyck ist daer te <rhyme label="a" type="f">wesen</rhyme></l>
        <l id="s28:l2" met="4" type="-+">Int huys in het hemels <rhyme label="b" type="m">lant</rhyme>,</l>
        <l id="s28:l3" met="4" type="-+">Ouer tgheselschap van alle <rhyme label="a" type="f" corresp="#s28:l1">desen</rhyme></l>
        <l id="s28:l4" met="4" type="-+">Die U Heer daer louen zeer <rhyme label="b" type="m" corresp="#s28:l2">triumphant</rhyme></l>
      </lg>
      <lg id="s29" type="stanza">
        <l id="s29:l1" met="4" type="-+">Daer zyn veel vrienden ende <rhyme label="a" type="f">vriendinne</rhyme></l>
        <l id="s29:l2" met="4" type="-+">Oock veel Engelen in groot <rhyme label="b" type="m">ghetael</rhyme></l>
        <l id="s29:l3" met="4" type="-+">Die malcander daer zeer <rhyme label="a" type="f" corresp="#s29:l1">beminnen</rhyme>,</l>
        <l id="s29:l4" met="4" type="-+">En louen haer schepper daer <rhyme label="b" type="m" corresp="#s29:l2">altemael</rhyme>.</l>
      </lg>
      <lg id="s30" type="stanza">
        <l id="s30:l1" met="4" type="-+">Laet ons dese stemme daer mede <rhyme label="a" type="f">hooren</rhyme></l>
        <l id="s30:l2" met="4" type="-+">In u Paleys van uwen <rhyme label="b" type="m">schaer</rhyme>,</l>
        <l id="s30:l3" met="4" type="-+">O, dat ons ooghen, ende ons <rhyme label="a" type="f" corresp="#s30:l1">ooren</rhyme></l>
        <l id="s30:l4" met="4" type="-+">O Godt v glorie werden <rhyme label="b" type="m" corresp="#s30:l2">gewaer</rhyme></l>
      </lg>
      <lg id="s31" type="stanza">
        <l id="s31:l1" met="4" type="-+">Sy zyn zeer salich die v daer <rhyme label="a" type="f">louen</rhyme></l>
        <l id="s31:l2" met="4" type="-+">Haer schoonheyt is daer zeer <rhyme label="b" type="m">verbreyt</rhyme>,</l>
        <l id="s31:l3" met="4" type="-+">Maer ghy Heere gaetse al te <rhyme label="a" type="f" corresp="#s31:l1">bouen</rhyme></l>
        <l id="s31:l4" met="4" type="-+">Wt v scheppen zy al haer <rhyme label="b" type="m" corresp="#s31:l2">zalicheyt</rhyme>.</l>
      </lg>
      <lg id="s32" type="stanza">
        <l id="s32:l1" met="4" type="-+">Oorlof mijn broeders hier <rhyme label="a" type="f">altesamen</rhyme></l>
        <l id="s32:l2" met="4" type="-+">Laet ons nu loopen nae desen <rhyme label="b" type="m">prijs</rhyme></l>
        <l id="s32:l3" met="4" type="-+">Loopt wel, en volherdich nae Gods <rhyme label="a" type="f" corresp="#s32:l1">betamen</rhyme></l>
        <l id="s32:l4" met="4" type="-+">Soo sult ghy comen int <rhyme label="b" type="m" corresp="#s32:l2">paradijs</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

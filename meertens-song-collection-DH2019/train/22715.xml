  <author>David Joris</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Die Heer is Coninck in <rhyme label="a" type="m">Israel</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Des verblyden wy van herten <rhyme label="b" type="f">seere</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Hy komt ons bald' op mit vlijt seer <rhyme label="a" type="m" corresp="#s1:l1">snel</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Te verlossen <rhyme label="b" type="f" corresp="#s1:l2">immermeere</rhyme>:</l>
        <l id="s1:l5" met="3" type="-+">Die nu hier sijn in <rhyme label="c" type="m">druck</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Und' in <rhyme label="c" type="m" corresp="#s1:l5">ongeluck</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Van deser Werlt <rhyme label="d" type="m">pleyn</rhyme>:</l>
        <l id="s1:l8" met="4" type="-+">Sy werden noch verblijdt <rhyme label="d" type="m" corresp="#s1:l7">certeyn</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">In Godt den Vader den <rhyme label="e" type="f">Olden</rhyme>,</l>
        <l id="s1:l10" met="4" type="-+">Als der Heer dat Oordeel sal <rhyme label="e" type="f" corresp="#s1:l9">holden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ghy Armen deser Werlt <rhyme label="a" type="m">bloot</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Wilt niet kleyn-moedich <rhyme label="b" type="f">werden</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Ghy werd noch rijck van macht seer <rhyme label="a" type="m" corresp="#s2:l1">groot</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Die Serpenten sult ghy <rhyme label="b" type="f" corresp="#s2:l2">verterden</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">U ooghen sullen noch <rhyme label="c" type="m">sien</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Die stolte Godtloose <rhyme label="c" type="m" corresp="#s2:l5">Lien</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Die hier mit Babel sijn <rhyme label="d" type="m">een</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">Op der Aerden als dreck <rhyme label="d" type="m" corresp="#s2:l7">vertreen</rhyme>:</l>
        <l id="s2:l9" met="3" type="-+">Als gheeyndt sullen sijn haer <rhyme label="e" type="f">tyden</rhyme>,</l>
        <l id="s2:l10" met="4" type="-+">Dan sult ghy mit vreuchden <rhyme label="e" type="f" corresp="#s2:l9">verblyden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Die Arme unde ellendighe <rhyme label="a" type="m">versmaet</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Die van s'Menschen hulp sijn <rhyme label="b" type="f">verlaten</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Sullen vrolijck sijn in den Heere, <rhyme label="a" type="m" corresp="#s3:l1">verstaet</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Al schynen sy nu te <rhyme label="b" type="f" corresp="#s3:l2">verwaten</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Als der Tyrannen <rhyme label="c" type="m">gheschal</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Een eynde hebben <rhyme label="c" type="m" corresp="#s3:l5">sal</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Unde alst al is <rhyme label="d" type="m">ghedaen</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">Mitten Spotters, die haest sullen <rhyme label="d" type="m" corresp="#s3:l7">vergaen</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Als vernielt sijn die d'Armen <rhyme label="e" type="f">quellen</rhyme>,</l>
        <l id="s3:l10" met="4" type="-+">Die nu wacker sijn om haer te <rhyme label="e" type="f" corresp="#s3:l9">vellen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Die hier mit tranen nu sayen <rhyme label="a" type="m">hoort</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Sullen mit vreuchden mayen <rhyme label="b" type="f">onbeladen</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Sy gaen heen weenen, verstaet dat <rhyme label="a" type="m" corresp="#s4:l1">Woordt</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Nochtans draghen sy Edele <rhyme label="b" type="f" corresp="#s4:l2">Saden</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Unde komen weder mit <rhyme label="c" type="m">vreucht</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">In oprechter <rhyme label="c" type="m" corresp="#s4:l5">deucht</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Brenghen sy sonder <rhyme label="d" type="m">vaer</rhyme>,</l>
        <l id="s4:l8" met="4" type="-+">Haer Schooven vol, suyver und' <rhyme label="d" type="m" corresp="#s4:l7">claer</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">Eewelijck ghenoech om te <rhyme label="e" type="f">eeten</rhyme>,</l>
        <l id="s4:l10" met="4" type="-+">Dan is al het lyden <rhyme label="e" type="f" corresp="#s4:l9">vergheeten</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ghy arm kleyn Hoopken Israels <rhyme label="a" type="m">vliet</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Die verganckelijckheydt deser <rhyme label="b" type="f">Aerden</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Ons Rijck is van deser Werlt <rhyme label="a" type="m" corresp="#s5:l1">niet</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Holdt dat toekomende is in <rhyme label="b" type="f" corresp="#s5:l2">waerden</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Dat voor weynich is <rhyme label="c" type="m">bereydt</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Maer dit voor veelen <rhyme label="c" type="m" corresp="#s5:l5">steydt</rhyme>:</l>
        <l id="s5:l7" met="3" type="-+">Een seer kleyn <rhyme label="d" type="m">Jolijt</rhyme>,</l>
        <l id="s5:l8" met="4" type="-+">Dat die eewighe doot <rhyme label="d" type="m" corresp="#s5:l7">bevlijt</rhyme>:</l>
        <l id="s5:l9" met="3" type="-+">Wilt dit inder herten <rhyme label="e" type="f">houwen</rhyme>,</l>
        <l id="s5:l10" met="4" type="-+">Vast in Godt sonder omsien <rhyme label="e" type="f" corresp="#s5:l9">betrouwen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Die beloften Christi sullen blyven <rhyme label="a" type="m">staen</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Wilt int Gheloove niet <rhyme label="b" type="f">sneven</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">Voor een sult ghy Tien, Ja hondert <rhyme label="a" type="m" corresp="#s6:l1">ontfaen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Daer toe dat Eewighe <rhyme label="b" type="f" corresp="#s6:l2">leven</rhyme>:</l>
        <l id="s6:l5" met="3" type="-+">Al vertoeftet op't <rhyme label="c" type="m">lest</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Het gheschiet om't <rhyme label="c" type="m" corresp="#s6:l5">best</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">T'Ghetal moet sijn <rhyme label="d" type="m">vervult</rhyme>:</l>
        <l id="s6:l8" met="4" type="-+">Daerom staet vast, u lyden <rhyme label="d" type="m" corresp="#s6:l7">dult</rhyme>,</l>
        <l id="s6:l9" met="3" type="-+">Sonder eenich <rhyme label="e" type="f">murmureeren</rhyme>,</l>
        <l id="s6:l10" met="4" type="-+">Droefheyt sal haest in blyschap <rhyme label="e" type="f" corresp="#s6:l9">verkeeren</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Prins als die verstroyinghe seer <rhyme label="a" type="m">snel</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Des Heylighen Volcks een eynde <rhyme label="b" type="f">heeft</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">So sal dit gheschieden <rhyme label="a" type="m" corresp="#s7:l1">snel</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Dat Godts Heylighen hier in druck <rhyme label="b" type="f" corresp="#s7:l2">gheleeft</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Ontfanghen sullen dat <rhyme label="c" type="m">Rijck</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Unde besitten't <rhyme label="c" type="m" corresp="#s7:l5">eewelijck</rhyme>:</l>
        <l id="s7:l7" met="3" type="-+">Victorioes sonder <rhyme label="d" type="m">vaer</rhyme>,</l>
        <l id="s7:l8" met="4" type="-+">T'ghewelt sal haer dienen <rhyme label="d" type="m" corresp="#s7:l7">voorwaer</rhyme>:</l>
        <l id="s7:l9" met="3" type="-+">Dats t'eynde van deser <rhyme label="e" type="f">spraecken</rhyme>,</l>
        <l id="s7:l10" met="4" type="-+">Wilt vrolijck ghy Christen <rhyme label="e" type="f" corresp="#s7:l9">opwaecken</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

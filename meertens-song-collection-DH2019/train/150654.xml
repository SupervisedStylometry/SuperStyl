  <author>Dirk Rafaelsz. Camphuysen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">LOff den Heer. want hy is <rhyme label="a" type="m">goedt</rhyme>.</l>
        <l id="s1:l2" met="4" type="+-">Loff, met lippen en <rhyme label="a" type="m" corresp="#s1:l1">gemoedt</rhyme>:</l>
        <l id="s1:l3" met="4" type="+-">Want sijn goedtheydt streckt sich <rhyme label="b" type="m">veer</rhyme></l>
        <l id="s1:l4" met="4" type="+-">En duert <rhyme label="b" type="m" corresp="#s1:l3">immer-immermeer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Loff den Heer’, een Godt der <rhyme label="a" type="m">Goon</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Groot, en alderhooghst van <rhyme label="a" type="m" corresp="#s2:l1">throon</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Want sijn goedtheydt streckt sich <rhyme label="b" type="m">veer</rhyme></l>
        <l id="s2:l4" met="4" type="+-">En duert <rhyme label="b" type="m" corresp="#s2:l3">immer-immermeer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Loff den Heer, wiens <rhyme label="a" type="m">heerschappy</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Alle and’re stijght <rhyme label="a" type="m" corresp="#s3:l1">voorby</rhyme>:</l>
        <l id="s3:l3" met="4" type="+-">(Want sijn goedtheydt streckt sich <rhyme label="b" type="m">veer</rhyme></l>
        <l id="s3:l4" met="4" type="+-">En duert <rhyme label="b" type="m" corresp="#s3:l3">immer-immermeer</rhyme>.)</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Die alleen de daden <rhyme label="a" type="m">doet</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Wier het oogh verwond’ren <rhyme label="a" type="m" corresp="#s4:l1">moet</rhyme>:</l>
        <l id="s4:l3" met="4" type="+-">(Want sijn goedtheydt streckt sich <rhyme label="b" type="m">veer</rhyme></l>
        <l id="s4:l4" met="4" type="+-">En duert <rhyme label="b" type="m" corresp="#s4:l3">immer-immermeer</rhyme>.)</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Die de Heem’len heeft <rhyme label="a" type="m">gesticht</rhyme></l>
        <l id="s5:l2" met="4" type="+-">En soo konstigh <rhyme label="a" type="m" corresp="#s5:l1">toe-gericht</rhyme>:</l>
        <l id="s5:l3" met="4" type="+-">(Want sijn goedtheydt streckt sich <rhyme label="b" type="m">veer</rhyme></l>
        <l id="s5:l4" met="4" type="+-">En duert <rhyme label="b" type="m" corresp="#s5:l3">immer-immermeer</rhyme>.)</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Die de aerde <rhyme label="a" type="m">uyt-gebreydt</rhyme></l>
        <l id="s6:l2" met="4" type="+-">En op’t water heeft <rhyme label="a" type="m" corresp="#s6:l1">geleyt</rhyme>:</l>
        <l id="s6:l3" met="4" type="+-">(Want sijn goedtheydt streckt sich <rhyme label="b" type="m">veer</rhyme></l>
        <l id="s6:l4" met="4" type="+-">En duert <rhyme label="b" type="m" corresp="#s6:l3">immer-immermeer</rhyme>.)</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Die in’t groot azuren <rhyme label="a" type="m">veldt</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Groote lichten heeft <rhyme label="a" type="m" corresp="#s7:l1">gestelt</rhyme>;</l>
        <l id="s7:l3" met="4" type="+-">(Want sijn goedtheydt streckt sich <rhyme label="b" type="m">veer</rhyme></l>
        <l id="s7:l4" met="4" type="+-">En duert <rhyme label="b" type="m" corresp="#s7:l3">immer-immermeer</rhyme>.)</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Hier de heugelijcke <rhyme label="a" type="m">Son</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Die den dagh beheerschen <rhyme label="a" type="m" corresp="#s8:l1">kon</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">(Want sijn goedtheydt streckt sich <rhyme label="b" type="m">veer</rhyme></l>
        <l id="s8:l4" met="4" type="+-">En duert <rhyme label="b" type="m" corresp="#s8:l3">immer-immermeer</rhyme>.)</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Daer de Sterren met de <rhyme label="a" type="m">Maen</rhyme></l>
        <l id="s9:l2" met="4" type="+-">Om den nacht ten licht’ te <rhyme label="a" type="m" corresp="#s9:l1">staen</rhyme>:</l>
        <l id="s9:l3" met="4" type="+-">(Want sijn goedtheydt streckt sich <rhyme label="b" type="m">veer</rhyme></l>
        <l id="s9:l4" met="4" type="+-">En duert <rhyme label="b" type="m" corresp="#s9:l3">immer-immermeer</rhyme>.)</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Die de eerst-geboor’ne <rhyme label="a" type="m">sloegh</rhyme></l>
        <l id="s10:l2" met="4" type="+-">Welck’ het gantsch’ Egypten <rhyme label="a" type="m" corresp="#s10:l1">droegh</rhyme>;</l>
        <l id="s10:l3" met="4" type="+-">(Want sijn goedtheydt streckt sich <rhyme label="b" type="m">veer</rhyme></l>
        <l id="s10:l4" met="4" type="+-">En duert <rhyme label="b" type="m" corresp="#s10:l3">immer-immermeer</rhyme>.)</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">En sijn uytverkoren <rhyme label="a" type="m">schaer</rhyme></l>
        <l id="s11:l2" met="4" type="+-">Leyden uyt het mids van <rhyme label="a" type="m" corresp="#s11:l1">haer</rhyme>,</l>
        <l id="s11:l3" met="4" type="+-">(Want sijn goedtheydt streckt sich <rhyme label="b" type="m">veer</rhyme></l>
        <l id="s11:l4" met="4" type="+-">En duert <rhyme label="b" type="m" corresp="#s11:l3">immer-immermeer</rhyme>.)</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Door een meer-dan aerdtsche <rhyme label="a" type="m">macht</rhyme></l>
        <l id="s12:l2" met="4" type="+-">En een arm vol aller <rhyme label="a" type="m" corresp="#s12:l1">kracht</rhyme>:</l>
        <l id="s12:l3" met="4" type="+-">(Want sijn goedtheydt streckt sich <rhyme label="b" type="m">veer</rhyme></l>
        <l id="s12:l4" met="4" type="+-">En duert <rhyme label="b" type="m" corresp="#s12:l3">immer-immermeer</rhyme>.)</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Die daer kliefd’ en deyld’ in <rhyme label="a" type="m">twee</rhyme></l>
        <l id="s13:l2" met="4" type="+-">’tWater van de roode <rhyme label="a" type="m" corresp="#s13:l1">zee</rhyme>,</l>
        <l id="s13:l3" met="4" type="+-">(Want sijn goedtheydt streckt sich <rhyme label="b" type="m">veer</rhyme></l>
        <l id="s13:l4" met="4" type="+-">En duert <rhyme label="b" type="m" corresp="#s13:l3">immer-immermeer</rhyme>.)</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">En gaff Israel een <rhyme label="a" type="m">pas</rhyme></l>
        <l id="s14:l2" met="4" type="+-">Daer eerlang een afgrondt <rhyme label="a" type="m" corresp="#s14:l1">was</rhyme>;</l>
        <l id="s14:l3" met="4" type="+-">(Want sijn goedtheydt streckt sich <rhyme label="b" type="m">veer</rhyme></l>
        <l id="s14:l4" met="4" type="+-">En duert <rhyme label="b" type="m" corresp="#s14:l3">immer-immermeer</rhyme>.)</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="+-">En heeft Pharo met sijn <rhyme label="a" type="m">heyr</rhyme></l>
        <l id="s15:l2" met="4" type="+-">Overswalpt in’t roode <rhyme label="a" type="m" corresp="#s15:l1">meyr</rhyme></l>
        <l id="s15:l3" met="4" type="+-">(Want sijn goedtheydt streckt sich <rhyme label="b" type="m">veer</rhyme></l>
        <l id="s15:l4" met="4" type="+-">En duert <rhyme label="b" type="m" corresp="#s15:l3">immer-immermeer</rhyme>.)</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="+-">Die sijn volck als metter <rhyme label="a" type="m">handt</rhyme></l>
        <l id="s16:l2" met="4" type="+-">Heeft geleydt door’t woeste <rhyme label="a" type="m" corresp="#s16:l1">landt</rhyme>:</l>
        <l id="s16:l3" met="4" type="+-">(Want sijn goedtheydt streckt sich <rhyme label="b" type="m">veer</rhyme></l>
        <l id="s16:l4" met="4" type="+-">En duert <rhyme label="b" type="m" corresp="#s16:l3">immer-immermeer</rhyme>.)</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="+-">Die soo menigh vorst’lijck <rhyme label="a" type="m">hoofdt</rhyme></l>
        <l id="s17:l2" met="4" type="+-">Kroon en leven heeft <rhyme label="a" type="m" corresp="#s17:l1">ontrooft</rhyme>:</l>
        <l id="s17:l3" met="4" type="+-">(Want sijn goedtheydt streckt sich <rhyme label="b" type="m">veer</rhyme></l>
        <l id="s17:l4" met="4" type="+-">En duert <rhyme label="b" type="m" corresp="#s17:l3">immer-immermeer</rhyme>.)</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="+-">Die (hoewel van krachten <rhyme label="a" type="m">groot</rhyme>)</l>
        <l id="s18:l2" met="4" type="+-">Menigh Koning bracht ter <rhyme label="a" type="m" corresp="#s18:l1">doodt</rhyme>;</l>
        <l id="s18:l3" met="4" type="+-">(Want sijn goedtheydt streckt sich <rhyme label="b" type="m">veer</rhyme></l>
        <l id="s18:l4" met="4" type="+-">En duert <rhyme label="b" type="m" corresp="#s18:l3">immer-immermeer</rhyme>.)</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="+-">Sihon, onder wiens <rhyme label="a" type="m">ontsagh</rhyme></l>
        <l id="s19:l2" met="4" type="+-">’tLandt der Amorijten <rhyme label="a" type="m" corresp="#s19:l1">lagh</rhyme></l>
        <l id="s19:l3" met="4" type="+-">(Want sijn goedtheydt streckt sich <rhyme label="b" type="m">veer</rhyme></l>
        <l id="s19:l4" met="4" type="+-">En duert <rhyme label="b" type="m" corresp="#s19:l3">immer-immermeer</rhyme>.)</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="+-">Og, die Basans scepter <rhyme label="a" type="m">had</rhyme></l>
        <l id="s20:l2" met="4" type="+-">En een hoogen throon <rhyme label="a" type="m" corresp="#s20:l1">betrad</rhyme>;</l>
        <l id="s20:l3" met="4" type="+-">(Want sijn goedtheydt streckt sich <rhyme label="b" type="m">veer</rhyme></l>
        <l id="s20:l4" met="4" type="+-">En duert <rhyme label="b" type="m" corresp="#s20:l3">immer-immermeer</rhyme>.)</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="4" type="+-">Hare landen deyld’ hy <rhyme label="a" type="m">uyt</rhyme>,</l>
        <l id="s21:l2" met="4" type="+-">Deyld’ hy als een <rhyme label="a" type="m" corresp="#s21:l1">oorlooghs-buyt</rhyme>,</l>
        <l id="s21:l3" met="4" type="+-">(Want sijn goedtheydt streckt sich <rhyme label="b" type="m">veer</rhyme></l>
        <l id="s21:l4" met="4" type="+-">En duert <rhyme label="b" type="m" corresp="#s21:l3">immer-immermeer</rhyme>.)</l>
      </lg>
      <lg id="s22" type="stanza">
        <l id="s22:l1" met="4" type="+-">Deyld’ hy uyt, ten erff en <rhyme label="a" type="m">recht</rhyme>,</l>
        <l id="s22:l2" met="4" type="+-">Aen Israel sijnen <rhyme label="a" type="m" corresp="#s22:l1">knecht</rhyme>:</l>
        <l id="s22:l3" met="4" type="+-">(Want sijn goedtheydt streckt sich <rhyme label="b" type="m">veer</rhyme></l>
        <l id="s22:l4" met="4" type="+-">En duert <rhyme label="b" type="m" corresp="#s22:l3">immer-immermeer</rhyme>.)</l>
      </lg>
      <lg id="s23" type="stanza">
        <l id="s23:l1" met="4" type="+-">Die sich goedtlijck in’t <rhyme label="a" type="m">gedacht</rhyme></l>
        <l id="s23:l2" met="4" type="+-">Onse kleynheydt heeft <rhyme label="a" type="m" corresp="#s23:l1">herbracht</rhyme>;</l>
        <l id="s23:l3" met="4" type="+-">(Want sijn goedtheydt streckt sich <rhyme label="b" type="m">veer</rhyme></l>
        <l id="s23:l4" met="4" type="+-">En duert <rhyme label="b" type="m" corresp="#s23:l3">immer-immermeer</rhyme>.)</l>
      </lg>
      <lg id="s24" type="stanza">
        <l id="s24:l1" met="4" type="+-">Die ons heeft in’t vry <rhyme label="a" type="m">geset</rhyme></l>
        <l id="s24:l2" met="4" type="+-">En van ons’ party <rhyme label="a" type="m" corresp="#s24:l1">geredt</rhyme>:</l>
        <l id="s24:l3" met="4" type="+-">(Want sijn goedtheydt streckt sich <rhyme label="b" type="m">veer</rhyme></l>
        <l id="s24:l4" met="4" type="+-">En duert <rhyme label="b" type="m" corresp="#s24:l3">immer-immermeer</rhyme>.)</l>
      </lg>
      <lg id="s25" type="stanza">
        <l id="s25:l1" met="4" type="+-">Die met spijs Natures <rhyme label="a" type="m">eysch</rhyme></l>
        <l id="s25:l2" met="4" type="+-">Mildt voldoet aen alle <rhyme label="a" type="m" corresp="#s25:l1">vleysch</rhyme>.</l>
        <l id="s25:l3" met="4" type="+-">(Want sijn goedtheydt streckt sich <rhyme label="b" type="m">veer</rhyme></l>
        <l id="s25:l4" met="4" type="+-">En duert <rhyme label="b" type="m" corresp="#s25:l3">immer-immermeer</rhyme>.)</l>
      </lg>
      <lg id="s26" type="stanza">
        <l id="s26:l1" met="4" type="+-">Gode loff, die saligh <rhyme label="a" type="m">leeft</rhyme></l>
        <l id="s26:l2" met="4" type="+-">En ter woonst den Hemel <rhyme label="a" type="m" corresp="#s26:l1">heeft</rhyme>:</l>
        <l id="s26:l3" met="4" type="+-">Want sijn goedtheydt streckt sich <rhyme label="b" type="m">veer</rhyme></l>
        <l id="s26:l4" met="4" type="+-">En duert <rhyme label="b" type="m" corresp="#s26:l3">immer-immermeer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

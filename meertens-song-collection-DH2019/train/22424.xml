  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">VErleent ons vrede <rhyme label="a" type="m">ghenadelijck</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Heere Godt in onsen <rhyme label="b" type="f">tijden</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Daer en is gheen ander <rhyme label="a" type="m" corresp="#s1:l1">ghestadelijck</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Die voor ons conde <rhyme label="b" type="f" corresp="#s1:l2">strijden</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Dan ghy onsen Godt <rhyme label="c" type="f">alleene</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Als ghy verlichtet onsen <rhyme label="a" type="m">moet</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Rechte wercken wy <rhyme label="b" type="f">drijuen</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Daer toe gheeft ons u genade <rhyme label="a" type="m" corresp="#s2:l1">goet</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Op dat wy by dijn woort vast <rhyme label="b" type="f" corresp="#s2:l2">blijuen</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">Met rechten ghelooue <rhyme label="c" type="f">reyne</rhyme>:</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">VVat u in onsen sonden <rhyme label="a" type="m">misgreyt</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Wilt ons dat niet <rhyme label="b" type="f">toemeten</rhyme>.</l>
        <l id="s3:l3" met="4" type="-+">Maer nae u groote <rhyme label="a" type="m" corresp="#s3:l1">bermherticheyt</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Wilt dijnes thoorens <rhyme label="b" type="f" corresp="#s3:l2">vergheten</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">Om Jhesu Christi <rhyme label="c" type="f">wille</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Dat bidden wy u alle <rhyme label="a" type="m">ghelijck</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Op dat wy tallen <rhyme label="b" type="f">tijden</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Door uwe hulpe en bystant <rhyme label="a" type="m" corresp="#s4:l1">rijck</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Teghen ons vyanden <rhyme label="b" type="f" corresp="#s4:l2">strijden</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">Tot dijnen lof, prijs, en <rhyme label="c" type="f">eere</rhyme>.</l>
      </lg>
    </lg>
  </text>

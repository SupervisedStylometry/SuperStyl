  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">HEt thiende <rhyme label="a" type="m">deel</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Der Vruchten van-der <rhyme label="b" type="f">eerden</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Wildy ô Heer' <rhyme label="b" type="f" corresp="#s1:l2">aen-veerden</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Maer ghy wilt ons hert <rhyme label="a" type="m" corresp="#s1:l1">geheel</rhyme>;</l>
        <l id="s1:l5" met="4" type="-+">De liefd' is 't Rocksken Sonder <rhyme label="c" type="m">naet</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Het scheyden komt voordts Uyt den <rhyme label="c" type="m" corresp="#s1:l5">haet</rhyme>:</l>
        <l id="s1:l7" met="4" type="-+">Heel myn hert' en al myn <rhyme label="d" type="f">sinnen</rhyme></l>
        <l id="s1:l8" met="2" type="+-">Zyn <rhyme label="e" type="m">alleen</rhyme></l>
        <l id="s1:l9" met="4" type="-+">Voor u, Heer', en anders <rhyme label="e" type="m" corresp="#s1:l8">geen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Kost wat het <rhyme label="a" type="m">kost</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Hebdy, ô Heer' uw' <rhyme label="b" type="f">Schapen</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Die ghy eerst hadd' <rhyme label="b" type="f" corresp="#s2:l2">gheschapen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Met uw dierbaer Bloedt <rhyme label="a" type="m" corresp="#s2:l1">verlost</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Op datter niet Een Schacpken <rhyme label="c" type="m">niet</rhyme></l>
        <l id="s2:l6" met="4" type="-+">De helft van syne Liefd' en <rhyme label="c" type="m" corresp="#s2:l5">biet</rhyme></l>
        <l id="s2:l7" met="4" type="-+">Aen den Schepper, en <rhyme label="d" type="f">Verlosser</rhyme></l>
        <l id="s2:l8" met="2" type="+-">Als <rhyme label="e" type="m">alleen</rhyme></l>
        <l id="s2:l9" met="4" type="-+">Aen u Heer' en anders <rhyme label="e" type="m" corresp="#s2:l8">gheen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Is 't <rhyme label="a" type="m">moghelyck</rhyme></l>
        <l id="s3:l2" met="3" type="-+">O Heer' dat die u <rhyme label="b" type="f">kennen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Hun-selven noch <rhyme label="b" type="f" corresp="#s3:l2">ghewennen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Tot de min van <rhyme label="a" type="m" corresp="#s3:l1">d'Aerde-Ryck</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">O Heer' doet uw Schoon <rhyme label="c" type="m">Hemel-Ryck</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Te niet met heel het <rhyme label="c" type="m" corresp="#s3:l5">Aerde-ryck</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Soo en sal den mensch niet <rhyme label="d" type="f">minnen</rhyme></l>
        <l id="s3:l8" met="2" type="+-">Als <rhyme label="e" type="m">alleen</rhyme></l>
        <l id="s3:l9" met="4" type="-+">U, ô Heer', en anders <rhyme label="e" type="m" corresp="#s3:l8">gheen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

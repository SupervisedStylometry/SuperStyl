    <melody>Te mei als alle vogels zingen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">EEn nieuwe liet wy heffen <rhyme label="a" type="m">aen</rhyme></l>
        <l id="s1:l2" met="4" type="-+">O mensch wilt nv Gods woort <rhyme label="a" type="m" corresp="#s1:l1">ontfaen</rhyme></l>
        <l id="s1:l3" met="3" type="-+">En volcht na Gods <rhyme label="b" type="f">gheboden</rhyme></l>
        <l id="s1:l4" met="4" type="-+">En wilt alleen op Christum <rhyme label="a" type="m" corresp="#s1:l1">staen</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Wacht v van vreemde <rhyme label="b" type="f" corresp="#s1:l3">Goden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Neemt een exempel aen <rhyme label="a" type="m">Israel</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Hoe datse God oock plaechde <rhyme label="a" type="m" corresp="#s2:l1">fel</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Al in de <rhyme label="b" type="f">woestenijen</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Hierom en bidt niet aen den <rhyme label="a" type="m" corresp="#s2:l1">Bel</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Hy en can v niet <rhyme label="b" type="f" corresp="#s2:l3">beurijen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Maer gaet tot Christum dat edel <rhyme label="a" type="m">greyn</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Hy is den wech die waerheyt <rhyme label="a" type="m" corresp="#s3:l1">pleyn</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Die duere, en oock dat <rhyme label="b" type="f">leuen</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Coemt al tot desen verworpenen <rhyme label="a" type="m" corresp="#s3:l1">steyn</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Hy en sal v niet <rhyme label="b" type="f" corresp="#s3:l3">begheuen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Och mensche wilt God ghehoorsaem <rhyme label="a" type="m">zijn</rhyme></l>
        <l id="s4:l2" met="4" type="-+">En wacht v doch voor Babels <rhyme label="a" type="m" corresp="#s4:l1">wijn</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Daer van sy heeft <rhyme label="b" type="f">gheschoncken</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Die Princen ende Coninghen <rhyme label="a" type="m" corresp="#s4:l1">fijn</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Die zijn gheworden <rhyme label="b" type="f" corresp="#s4:l3">droncken</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Hierom wilt wt den slape <rhyme label="a" type="m">opstaen</rhyme></l>
        <l id="s5:l2" met="4" type="-+">En wilt niet meer tot Babel <rhyme label="a" type="m" corresp="#s5:l1">gaen</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Want sy soect v te <rhyme label="b" type="f">verleyden</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Aldus wilt ghy Gods rijck <rhyme label="a" type="m" corresp="#s5:l1">ontfaen</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Wt Babel moet ghy <rhyme label="b" type="f" corresp="#s5:l3">scheyden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Al zijnse ghedoot alle <rhyme label="a" type="m">ghelijck</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Die verlaten hebben Babels <rhyme label="a" type="m" corresp="#s6:l1">rijck</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Hierom en wilt niet <rhyme label="b" type="f">vreesen</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Want sy sal inder hellen <rhyme label="a" type="m" corresp="#s6:l1">slijck</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Noch seer verstooten <rhyme label="b" type="f" corresp="#s6:l3">wesen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">O broeders aensiet dese treken <rhyme label="a" type="m">groot</rhyme></l>
        <l id="s7:l2" met="4" type="-+">De vrouwe is nv in barens <rhyme label="a" type="m" corresp="#s7:l1">noot</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Den draeck coemt haer te <rhyme label="b" type="f">voren</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Waer dat kint gheboren <rhyme label="a" type="m" corresp="#s7:l1">bloot</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Dat hy dat mocht <rhyme label="b" type="f" corresp="#s7:l3">verschoren</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">O dochter van Syon hebt goeden <rhyme label="a" type="m">moet</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Al is den wech so smal als eenen <rhyme label="a" type="m" corresp="#s8:l1">voet</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Die ghy noch sult <rhyme label="b" type="f">betreen</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Die stadt die is vol alder <rhyme label="a" type="m" corresp="#s8:l1">goet</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Maer sy leyt int <rhyme label="b" type="f" corresp="#s8:l3">verneren</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Bekeert v ghy menschen groot en <rhyme label="a" type="m">smal</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Die den gherechtighen veruolcht hebt <rhyme label="a" type="m" corresp="#s9:l1">al</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Oft v sal worden <rhyme label="b" type="f">banghen</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Als den dach des Heeren comen <rhyme label="a" type="m" corresp="#s9:l1">sal</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Groot wee sal v <rhyme label="b" type="f" corresp="#s9:l3">beuanghen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Die gherechtighe hoort mijn <rhyme label="a" type="m">vermaen</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Sullen in groote volstandicheyt <rhyme label="a" type="m" corresp="#s10:l1">staen</rhyme></l>
        <l id="s10:l3" met="3" type="-+">En sullen <rhyme label="b" type="f">triumpheren</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Met Christo op den berch Syons <rhyme label="a" type="m" corresp="#s10:l1">plaen</rhyme></l>
        <l id="s10:l5" met="3" type="-+">Daer na staet ons <rhyme label="b" type="f" corresp="#s10:l3">begheren</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Als dan sal God oock scherpen <rhyme label="a" type="m">wel</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Sijn gramschap tot eender speeren <rhyme label="a" type="m" corresp="#s11:l1">fel</rhyme></l>
        <l id="s11:l3" met="3" type="-+">Om te beschermen zijn <rhyme label="b" type="f">dienaren</rhyme></l>
        <l id="s11:l4" met="4" type="-+">Met die wolcken sal hy comen <rhyme label="a" type="m" corresp="#s11:l1">snel</rhyme></l>
        <l id="s11:l5" met="3" type="-+">In zijn heerlicheyt <rhyme label="b" type="f" corresp="#s11:l3">openbaren</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Dan sullen die quade spreken <rhyme label="a" type="m">schier</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Dit zijnse die wy veruolchden <rhyme label="a" type="m" corresp="#s12:l1">fier</rhyme></l>
        <l id="s12:l3" met="3" type="-+">Haer deel is by den <rhyme label="b" type="f">Heere</rhyme></l>
        <l id="s12:l4" met="4" type="-+">Wy achten haer leuen raserie <rhyme label="a" type="m" corresp="#s12:l1">hier</rhyme></l>
        <l id="s12:l5" met="3" type="-+">Haer eynde sonder <rhyme label="b" type="f" corresp="#s12:l3">eere</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Die dit liedeken eerstmael <rhyme label="a" type="m">dichte</rhyme></l>
        <l id="s13:l2" met="4" type="-+">Begheert dat God zijn herte <rhyme label="a" type="m" corresp="#s13:l1">verlichte</rhyme></l>
        <l id="s13:l3" met="3" type="-+">Dat hy hem mach <rhyme label="b" type="f">aencleuen</rhyme></l>
        <l id="s13:l4" met="4" type="-+">Op dat hy zijnen naesten <rhyme label="a" type="m" corresp="#s13:l1">stichte</rhyme></l>
        <l id="s13:l5" met="3" type="-+">En God den prijs mach <rhyme label="b" type="f" corresp="#s13:l3">gheuen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

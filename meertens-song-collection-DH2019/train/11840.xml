<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>11840</id>
    <date>
      <year-start>1648</year-start>
      <year-end>1648</year-end>
    </date>
    <tags/>
    <melody>Psalm 031 Datheen</melody>
  <author>Dirck Pietersz Pers</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">GHy die in Gode zijt <rhyme label="a" type="f">herbooren</rhyme>:</l>
        <l id="s1:l2" met="3" type="-+">Draeght oock sijn wapens <rhyme label="b" type="m">mee</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Liefd', vriendlijckheyt en <rhyme label="b" type="m" corresp="#s1:l2">vree</rhyme>:</l>
        <l id="s1:l4" met="4" type="-+">En kleed u als sijn <rhyme label="a" type="f" corresp="#s1:l1">uytverkooren</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Met ootmoed en <rhyme label="c" type="f">meelijden</rhyme>:</l>
        <l id="s1:l6" met="3" type="-+">Niet in de pracht van <rhyme label="c" type="f" corresp="#s1:l5">zijden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Aen 't uytterlijck is 't niet <rhyme label="a" type="f">gelegen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">'t Vytwendigh is maer <rhyme label="b" type="m">schijn</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Godt wil in 't herte <rhyme label="b" type="m" corresp="#s2:l2">zijn</rhyme>:</l>
        <l id="s2:l4" met="4" type="-+">Indien ghy hebt van Godt <rhyme label="a" type="f" corresp="#s2:l1">verkregen</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Sijn zegen en <rhyme label="c" type="f">weldaden</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Danckt hem voor sijn <rhyme label="c" type="f" corresp="#s2:l5">genade</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Verdraeght een ander sijn <rhyme label="a" type="f">gebreecken</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">En 't geen u is <rhyme label="b" type="m">misdaen</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Als Christ is voor <rhyme label="b" type="m" corresp="#s3:l2">gegaen</rhyme>:</l>
        <l id="s3:l4" met="4" type="-+">Wilt niemants quaed met quaden <rhyme label="a" type="f" corresp="#s3:l1">wreecken</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Treckt aen der liefden <rhyme label="c" type="f">zeden</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En haer <rhyme label="c" type="f" corresp="#s3:l5">volkomentheden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Godts woord laet rijcklijck in u <rhyme label="a" type="f">woonen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Vol wijsheyt en vol <rhyme label="b" type="m">deughd</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Want dit 's een groote <rhyme label="b" type="m" corresp="#s4:l2">vreughd</rhyme>:</l>
        <l id="s4:l4" met="4" type="-+">Hy sal dit goed in u <rhyme label="a" type="f" corresp="#s4:l1">bekroonen</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Dus leert en sticht <rhyme label="c" type="f">malkandren</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Ghy sit of gaet te <rhyme label="c" type="f" corresp="#s4:l5">wandren</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Singht in u herte Gode <rhyme label="a" type="f">Psalmen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Lof-sangen soet van <rhyme label="b" type="m">toon</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Der deughden hooghste <rhyme label="b" type="m" corresp="#s5:l2">kroon</rhyme>:</l>
        <l id="s5:l4" met="4" type="-+">Met liedekens van soete <rhyme label="a" type="f" corresp="#s5:l1">galmen</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">En wilt met heldre <rhyme label="c" type="f">keelen</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Van Godts genade <rhyme label="c" type="f" corresp="#s5:l5">queelen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Al wat ghy doet in woord of <rhyme label="a" type="f">wercken</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Doet sulcks in Christi <rhyme label="b" type="m">naem</rhyme>:</l>
        <l id="s6:l3" met="3" type="-+">Godt en den Geest te <rhyme label="b" type="m" corresp="#s6:l2">saem</rhyme>:</l>
        <l id="s6:l4" met="4" type="-+">Dan suldy sijne goedheyt <rhyme label="a" type="f" corresp="#s6:l1">mercken</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Dus danckt door hem den <rhyme label="c" type="f">Vader</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Want Godt is niemant <rhyme label="c" type="f" corresp="#s6:l5">nader</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

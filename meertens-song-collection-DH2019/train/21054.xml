  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">SAligh is hy <rhyme label="a" type="f">bevonden</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Die God vreest en dient <rhyme label="b" type="m">recht</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Die oock gaet t' allen <rhyme label="a" type="f" corresp="#s1:l1">stonden</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">In sijne wegen <rhyme label="b" type="m" corresp="#s1:l2">sleght</rhyme>:</l>
        <l id="s1:l5" met="3" type="-+">Door 't werck 't welck ghy sult <rhyme label="c" type="f">drijven</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Wert ghy hier wel <rhyme label="d" type="m">ghevoedt</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">V doen sal wel <rhyme label="c" type="f" corresp="#s1:l5">beklijven</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Spoedigh met <rhyme label="d" type="m" corresp="#s1:l6">overvloet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">V Wijf sal ghelijck <rhyme label="a" type="f">wesen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">In u Huys seer <rhyme label="b" type="m">verblijt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Den Wijn-stock <rhyme label="a" type="f" corresp="#s2:l1">uytgelesen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Die vrucht draeght t' zijner <rhyme label="b" type="m" corresp="#s2:l2">tijdt</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Aen den disch in een <rhyme label="c" type="f">kroone</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Sullen u kind'ren <rhyme label="d" type="m">staen</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Als olyf-spruyten <rhyme label="c" type="f" corresp="#s2:l5">schoone</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Na malkand'ren <rhyme label="d" type="m" corresp="#s2:l6">voortaen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Dese schoone <rhyme label="a" type="f">weldaden</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Ontfanght hy in 't <rhyme label="b" type="m">gemeen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Die met quaet niet <rhyme label="a" type="f" corresp="#s3:l1">beladen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Is, en vreest God <rhyme label="b" type="m" corresp="#s3:l2">alleen</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">God uyt Zion <rhyme label="c" type="f">gepresen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">V dees genade <rhyme label="d" type="m">doet</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Dat ghy sult sien na <rhyme label="c" type="f" corresp="#s3:l5">desen</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Jerusalem <rhyme label="d" type="m" corresp="#s3:l6">voorspoet</rhyme>.</l>
      </lg>
    </lg>
  </text>

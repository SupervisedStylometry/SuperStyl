    </categories>
  <author>Hendrik Rintjes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Ghenade, vreede <rhyme label="a" type="f">t’samen</rhyme>,</l>
        <l id="s1:l2" met="2" type="+-">Nae ‘t <rhyme label="a" type="f" corresp="#s1:l1">betamen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Wensch ick den Christen <rhyme label="b" type="m">aerft</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Die haer van Godt niet <rhyme label="a" type="f" corresp="#s1:l1">schamen</rhyme>,</l>
        <l id="s1:l5" met="2" type="+-">Want haer <rhyme label="a" type="f" corresp="#s1:l1">namen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Zijn in ‘t Boeck des Levens <rhyme label="b" type="m" corresp="#s1:l3">bewaert</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">=2. Die van nieus zijn <rhyme label="a" type="f">ghebooren</rhyme>.</l>
        <l id="s2:l2" met="2" type="+-">Niet als <rhyme label="a" type="f" corresp="#s2:l1">vooren</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Uyt water vyer en <rhyme label="b" type="m">gheest</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Dat sijn Godts <rhyme label="a" type="f" corresp="#s2:l1">uyt-verkooren</rhyme>,</l>
        <l id="s2:l5" met="2" type="+-">Want sy <rhyme label="a" type="f" corresp="#s2:l1">hooren</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Sijn stem, en volghen hem <rhyme label="b" type="m" corresp="#s2:l3">onbevreest</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Want sy in ‘t herte <rhyme label="a" type="f">binnen</rhyme>,</l>
        <l id="s3:l2" met="2" type="+-">Seer <rhyme label="a" type="f" corresp="#s3:l1">beminnen</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Gods Woort, ‘t welck haer gheest <rhyme label="b" type="m">raet</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Dat sy, eer sy ‘t <rhyme label="a" type="f" corresp="#s3:l1">beginnen</rhyme>,</l>
        <l id="s3:l5" met="2" type="+-">Wel <rhyme label="a" type="f" corresp="#s3:l1">versinnen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En aflaten van alle <rhyme label="b" type="m" corresp="#s3:l3">quaet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Die van der boosheyt <rhyme label="a" type="f">keeren</rhyme>,</l>
        <l id="s4:l2" met="2" type="+-">En Godt <rhyme label="a" type="f" corresp="#s4:l1">eeren</rhyme></l>
        <l id="s4:l3" met="3" type="-+">In een nieu leven <rhyme label="b" type="m">fijn</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Sullen van ‘s werelts <rhyme label="a" type="f" corresp="#s4:l1">Heeren</rhyme>,</l>
        <l id="s4:l5" met="2" type="+-">Nae Godts <rhyme label="a" type="f" corresp="#s4:l1">leeren</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Ghehaet en verdreven <rhyme label="b" type="m" corresp="#s4:l3">zijn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Hoe wel sy boven <rhyme label="a" type="f">maten</rhyme>,</l>
        <l id="s5:l2" met="2" type="+-">Wildt dit <rhyme label="a" type="f" corresp="#s5:l1">vaten</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Prijsen Christum <rhyme label="b" type="m">eerbaer</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">En al dat sy <rhyme label="a" type="f" corresp="#s5:l1">besaten</rhyme>,</l>
        <l id="s5:l5" met="2" type="+-">Hier <rhyme label="a" type="f" corresp="#s5:l1">verlaten</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Om Godts woort de waerheyt <rhyme label="b" type="m" corresp="#s5:l3">klaer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Nae de waerheyt sy <rhyme label="a" type="f">haken</rhyme>,</l>
        <l id="s6:l2" met="2" type="+-">Ende <rhyme label="a" type="f" corresp="#s6:l1">waken</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Soo dat men dickwils <rhyme label="b" type="m">siet</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Dat sy aen palen, <rhyme label="a" type="f" corresp="#s6:l1">staken</rhyme>,</l>
        <l id="s6:l5" met="2" type="+-">Moeten <rhyme label="a" type="f" corresp="#s6:l1">raken</rhyme></l>
        <l id="s6:l6" met="3" type="-+">En om Gods woort lijden <rhyme label="b" type="m" corresp="#s6:l3">verdriet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">‘t Woort was in ‘t eerste <rhyme label="a" type="f">aen-kleven</rhyme>,</l>
        <l id="s7:l2" met="2" type="+-">By Godt <rhyme label="a" type="f" corresp="#s7:l1">verheven</rhyme></l>
        <l id="s7:l3" met="3" type="-+">En Godt was ‘t woort <rhyme label="b" type="m">voorwaer</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">In hem soo was het <rhyme label="a" type="f" corresp="#s7:l1">leven</rhyme>,</l>
        <l id="s7:l5" met="2" type="+-">‘t Welck <rhyme label="a" type="f" corresp="#s7:l1">ghegheven</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Is den mensche tot een licht <rhyme label="b" type="m" corresp="#s7:l3">eerbaer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Soo seer heeft Godt <rhyme label="a" type="f">Almachtigh</rhyme>,</l>
        <l id="s8:l2" met="2" type="+-">‘t Is <rhyme label="a" type="f" corresp="#s8:l1">waerachtich</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Dese werelt <rhyme label="b" type="m">bemint</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Hy heeft uyt liefden <rhyme label="a" type="f" corresp="#s8:l1">krachtigh</rhyme>,</l>
        <l id="s8:l5" met="2" type="+-">Zijt <rhyme label="a" type="f" corresp="#s8:l1">ghedachtich</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Voor haer ghegheven sijn lief <rhyme label="b" type="m" corresp="#s8:l3">Kindt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Christus die quam op <rhyme label="a" type="f">d’eerde</rhyme>,</l>
        <l id="s9:l2" met="2" type="+-">Groot an <rhyme label="a" type="f" corresp="#s9:l1">weerde</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Van sijn Hemelsche <rhyme label="b" type="m">Vaer</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Het vyer dat ons <rhyme label="a" type="f" corresp="#s9:l1">verteerde</rhyme>,</l>
        <l id="s9:l5" met="2" type="+-">Hy van ons <rhyme label="a" type="f" corresp="#s9:l1">weerde</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Om ons verlossen <rhyme label="b" type="m" corresp="#s9:l3">allegaer</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Al die in Christo <rhyme label="a" type="f">reene</rhyme>,</l>
        <l id="s10:l2" met="2" type="+-">Groot en <rhyme label="a" type="f" corresp="#s10:l1">kleene</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Ghelooft, en voort wel <rhyme label="b" type="m">doet</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Die laet hy niet <rhyme label="a" type="f" corresp="#s10:l1">alleene</rhyme>,</l>
        <l id="s10:l5" met="2" type="+-">Noch in <rhyme label="a" type="f" corresp="#s10:l1">wene</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Maer hy maecktse Godts kinders <rhyme label="b" type="m" corresp="#s10:l3">soet</rhyme></l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Men kan doch niet door <rhyme label="a" type="f">gronden</rhyme>,</l>
        <l id="s11:l2" met="2" type="+-">Noch <rhyme label="a" type="f" corresp="#s11:l1">vermonden</rhyme></l>
        <l id="s11:l3" met="3" type="-+">De liefde Christo <rhyme label="b" type="m">groot</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Dat hy ons door sijn <rhyme label="a" type="f" corresp="#s11:l1">wonden</rhyme></l>
        <l id="s11:l5" met="2" type="+-">Heeft <rhyme label="a" type="f" corresp="#s11:l1">ontbonden</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Ende bevrijdt al van den <rhyme label="b" type="m" corresp="#s11:l3">doot</rhyme></l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Dus ghy Adams <rhyme label="a" type="f">gheslachte</rhyme>,</l>
        <l id="s12:l2" met="2" type="+-">Kleyn van <rhyme label="a" type="f" corresp="#s12:l1">machte</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Looft Godt, en prijst hem <rhyme label="b" type="m">seer</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Met hert, met daet, met <rhyme label="a" type="f" corresp="#s12:l1">krachte</rhyme>,</l>
        <l id="s12:l5" met="2" type="+-">Met <rhyme label="a" type="f" corresp="#s12:l1">ghedachte</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Door Christum onsen lieven <rhyme label="b" type="m" corresp="#s12:l3">Heer</rhyme></l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">En aen sijn woort wilt <rhyme label="a" type="f">houwen</rhyme>,</l>
        <l id="s13:l2" met="2" type="+-">Met <rhyme label="a" type="f" corresp="#s13:l1">betrouwen</rhyme></l>
        <l id="s13:l3" met="3" type="-+">Vaste tot in den <rhyme label="b" type="m">endt</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Soo sal hy in ‘t <rhyme label="a" type="f" corresp="#s13:l1">benouwen</rhyme></l>
        <l id="s13:l5" met="2" type="+-">U <rhyme label="a" type="f" corresp="#s13:l1">bedouwen</rhyme></l>
        <l id="s13:l6" met="3" type="-+">Met sijnen Gheest seer <rhyme label="b" type="m" corresp="#s13:l3">excellent</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

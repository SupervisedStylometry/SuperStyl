  <author>Dirk Rafaelsz. Camphuysen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">MYn hert, van ydel duncken <rhyme label="a" type="m">reyn</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Door Eygenkundes kracht <rhyme label="b" type="m">geplet</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">En in sijn laegheyt vast <rhyme label="b" type="m" corresp="#s1:l2">geset</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Is in en by hem selven <rhyme label="a" type="m" corresp="#s1:l1">kleyn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Mijn hert en stouwt den voet niet <rhyme label="a" type="m">aen</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Om, onbesint en <rhyme label="b" type="m">radeloos</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Verlockt door een verradigh <rhyme label="b" type="m" corresp="#s2:l2">Broos</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Te groote gangen te <rhyme label="a" type="m" corresp="#s2:l1">bestaen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Mijn hert en verght de ooge <rhyme label="a" type="m">niet</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Dat sy, haers staets <rhyme label="b" type="m">vergetelijck</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Stout-stralend’ en <rhyme label="b" type="m" corresp="#s3:l2">vermetelijck</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Naer al te hooge dingen <rhyme label="a" type="m" corresp="#s3:l1">siet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Mijn minder acht ick niet <rhyme label="a" type="m">gering</rhyme>:</l>
        <l id="s4:l2" met="4" type="-+">Mijn meerder wijck ick gaern het <rhyme label="b" type="m">padt</rhyme>.</l>
        <l id="s4:l3" met="4" type="-+">Noyt heb ick my onheusch <rhyme label="b" type="m" corresp="#s4:l2">gehadt</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Off bats getoont in eenigh <rhyme label="a" type="m" corresp="#s4:l1">ding</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ghy weet, Heer, dat ick waerheyt <rhyme label="a" type="m">segh</rhyme>;</l>
        <l id="s5:l2" met="4" type="-+">En, recht als ’tnieuw-gespeende <rhyme label="b" type="m">kindt</rhyme></l>
        <l id="s5:l3" met="4" type="-+">’tHert aen de lieve Moeder <rhyme label="b" type="m" corresp="#s5:l2">bindt</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Mijn gantsche ziel-lust op U <rhyme label="a" type="m" corresp="#s5:l1">leg</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Een kindtjen, dat, versch <rhyme label="a" type="m">aff-geweert</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Van’t Zapjen daermen eerst door <rhyme label="b" type="m">leeft</rhyme></l>
        <l id="s6:l3" met="4" type="-+">’tGedenck noch niet verloren <rhyme label="b" type="m" corresp="#s6:l2">heeft</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Maer staegh en graegh van ’tSelve <rhyme label="a" type="m" corresp="#s6:l1">geert</rhyme>:</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">’tOnnoosel dier, wat wil’t? wat <rhyme label="a" type="m">sal’t</rhyme>?</l>
        <l id="s7:l2" met="4" type="-+">De Moeder is’t daer’t na <rhyme label="b" type="m">verlangt</rhyme>;</l>
        <l id="s7:l3" met="4" type="-+">De Moeder, daer’t alleen aen <rhyme label="b" type="m" corresp="#s7:l2">hangt</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Na steent, na weent, na reyckt, na <rhyme label="a" type="m" corresp="#s7:l1">valt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">De domm’ Natuyr uyt’t haer <rhyme label="a" type="m">verstandt</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">En drijft het teere hertjen <rhyme label="b" type="m">aen</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">En doet de lusjes derwaerts <rhyme label="b" type="m" corresp="#s8:l2">gaen</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Daer’t sich te voren best <rhyme label="a" type="m" corresp="#s8:l1">bevandt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Alsoo, mijn Godt, bevind ick <rhyme label="a" type="m">my</rhyme>.</l>
        <l id="s9:l2" met="4" type="-+">Met al mijn sinnen en <rhyme label="b" type="m">gemoedt</rhyme></l>
        <l id="s9:l3" met="4" type="-+">(Als ’tKindtjen aen sijn Moeder <rhyme label="b" type="m" corresp="#s9:l2">doet</rhyme>)</l>
        <l id="s9:l4" met="4" type="-+">Soeck ick mijn heul alleen aen <rhyme label="a" type="m" corresp="#s9:l1">dy</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Aen Dy: die my ter eeren <rhyme label="a" type="m">brengt</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Bestort met allen <rhyme label="b" type="m">overvloedt</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Vertroost, verquickt, beschermt, <rhyme label="b" type="m" corresp="#s10:l2">behoedt</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Met Konings-staff en kroon <rhyme label="a" type="m" corresp="#s10:l1">beschenckt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Aen Dy: door wien ick ’tlicht <rhyme label="a" type="m">bekenn</rhyme>’,</l>
        <l id="s11:l2" met="4" type="-+">In wien ick leeff en my <rhyme label="b" type="m">verrep</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Van wien ick heb al wat ick <rhyme label="b" type="m" corresp="#s11:l2">heb</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">uyt wien ick ben al wat ick <rhyme label="a" type="m" corresp="#s11:l1">ben</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Welaen, Godts uytverkoren <rhyme label="a" type="m">schaer</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Mijn Lantslie’die uw’ afkoomst <rhyme label="b" type="m">telt</rhyme></l>
        <l id="s12:l3" met="4" type="-+">Van Israel den vromen <rhyme label="b" type="m" corresp="#s12:l2">Heldt</rhyme>:</l>
        <l id="s12:l4" met="4" type="-+">Siet hoe ick doe, en volght my <rhyme label="a" type="m" corresp="#s12:l1">naer</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Nadien’t al Godts is watter <rhyme label="a" type="m">is</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">En hy ’tgenot van alle <rhyme label="b" type="m">goedt</rhyme></l>
        <l id="s13:l3" met="4" type="-+">Bescheeren en vergunnen <rhyme label="b" type="m" corresp="#s13:l2">moet</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">En weeren ramp en <rhyme label="a" type="m" corresp="#s13:l1">kommernis</rhyme>:</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Laet Godt, laet Godt, laet Godt <rhyme label="a" type="m">alleen</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">Laet Godt alleen dan (’tzy hoe’t <rhyme label="b" type="m">gaet</rhyme>)</l>
        <l id="s14:l3" met="4" type="-+">Vw’ troost zijn en uw’ <rhyme label="b" type="m" corresp="#s14:l2">toeverlaet</rhyme></l>
        <l id="s14:l4" met="4" type="-+">Van nu in aller <rhyme label="a" type="m" corresp="#s14:l1">eeuwiche’en</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

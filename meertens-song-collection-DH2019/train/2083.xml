  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HEer JESU Koningh van de <rhyme label="a" type="f">Heeren</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">En Heer van al die Koning <rhyme label="b" type="m">zyn</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Ick wil altydt met u <rhyme label="a" type="f" corresp="#s1:l1">verkeeren</rhyme></l>
        <l id="s1:l4" met="4" type="-+">In soete vreught, en <rhyme label="b" type="m" corresp="#s1:l2">droevepyn</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">'t Zy dat ghy <rhyme label="c" type="m">lydt</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">Oft zyt <rhyme label="c" type="m" corresp="#s1:l5">verblydt</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">'t Zy dat ghy <rhyme label="d" type="m">vast</rhyme>.</l>
        <l id="s1:l8" met="3" type="-+">Oft dat m'u noodt te <rhyme label="d" type="m" corresp="#s1:l7">gast</rhyme>,</l>
        <l id="s1:l9" met="4" type="-+">'t Zy dat g'in de Bruyloft drinckt <rhyme label="e" type="m">Wyn</rhyme>,</l>
        <l id="s1:l10" met="4" type="-+">Oft aen het Kruys drinckt Gall', en <rhyme label="e" type="m" corresp="#s1:l9">Azyn</rhyme></l>
        <l id="s1:l11" met="4" type="+-">Soo in de vreught, als in de <rhyme label="f" type="m">pyn</rhyme></l>
        <l id="s1:l12" met="5" type="-+">Sal ick altydt by u ô Jesu <rhyme label="f" type="m" corresp="#s1:l11">zyn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">'k Sal aen de Kribb' met u gaen <rhyme label="a" type="f">weenen</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">'k Sal bly zyn als Maria <rhyme label="b" type="m">singht</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Als 'su haer borstjens sal <rhyme label="a" type="f" corresp="#s2:l1">verleenẽ</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Soo roep'ick dat den Koningh <rhyme label="b" type="m" corresp="#s2:l2">drinckt</rhyme>;</l>
        <l id="s2:l5" met="2" type="-+">Maer Heer ick <rhyme label="c" type="m">sucht</rhyme></l>
        <l id="s2:l6" met="2" type="-+">Wanneêr ghy <rhyme label="c" type="m" corresp="#s2:l5">vlucht</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">Herodes <rhyme label="d" type="m">haet</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">En naer AEgypten <rhyme label="d" type="m" corresp="#s2:l7">gaet</rhyme>,</l>
        <l id="s2:l9" met="4" type="-+">'k En wil dan niet blyven hier <rhyme label="e" type="m">staen</rhyme>,</l>
        <l id="s2:l10" met="4" type="-+">Maer met u naer AEgypten toe <rhyme label="e" type="m" corresp="#s2:l9">gaen</rhyme></l>
        <l id="s2:l11" met="4" type="+-">Gelyck de Son de <rhyme label="f" type="m">Sonne-blom</rhyme>,</l>
        <l id="s2:l12" met="5" type="-+">Soo volgh ick Jesum mynen <rhyme label="f" type="m" corresp="#s2:l11">Bruydegom</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ick ben naer 't Beeldt van Godt <rhyme label="a" type="f">gheschapen</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Godt neem ick voor myn <rhyme label="b" type="m">exemplaer</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">'k En magh nu nievers meer naer <rhyme label="a" type="f" corresp="#s3:l1">gapen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Maer Godt ghedurigh volghen <rhyme label="b" type="m" corresp="#s3:l2">naer</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Myn hooghste <rhyme label="c" type="m">Goedt</rhyme>,</l>
        <l id="s3:l6" met="2" type="-+">Die met u <rhyme label="c" type="m" corresp="#s3:l5">Bloedt</rhyme></l>
        <l id="s3:l7" met="2" type="-+">Hebt kost dat <rhyme label="d" type="m">kost</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Myn arme ziel <rhyme label="d" type="m" corresp="#s3:l7">verlost</rhyme>,</l>
        <l id="s3:l9" met="4" type="-+">Ghy die myne saligheydt <rhyme label="e" type="m">zyt</rhyme></l>
        <l id="s3:l10" met="4" type="-+">O Goddelycke <rhyme label="e" type="m" corresp="#s3:l9">Majesteyt</rhyme></l>
        <l id="s3:l11" met="4" type="+-">Ick staen tot uwen dinst <rhyme label="f" type="m">bereydt</rhyme>,</l>
        <l id="s3:l12" met="5" type="-+">Nu en altydt tot in-der <rhyme label="f" type="m" corresp="#s3:l11">eeuwigheydt</rhyme>.</l>
      </lg>
    </lg>
  </text>

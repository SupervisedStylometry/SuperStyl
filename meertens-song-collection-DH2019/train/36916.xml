  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Blydtschap van myn <rhyme label="a" type="m">hert'</rhyme>,</l>
        <l id="s1:l2" met="5" type="-+">O Enghel, die my vertroost in all' myn <rhyme label="a" type="m" corresp="#s1:l1">smert'</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">O myn <rhyme label="b" type="m">Vriendin</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Die ick <rhyme label="b" type="m" corresp="#s1:l3">bemin</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">En lief uyt heel myn hert' en <rhyme label="b" type="m" corresp="#s1:l3">sin</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">O schoone’ <rhyme label="c" type="f">Persoone</rhyme></l>
        <l id="s1:l7" met="2" type="-+">Die my’ maeckt <rhyme label="d" type="m">bly</rhyme>,</l>
        <l id="s1:l8" met="2" type="-+">Wanneer ick <rhyme label="d" type="m" corresp="#s1:l7">ly</rhyme>,</l>
        <l id="s1:l9" met="2" type="+-">Die door het <rhyme label="e" type="m">licht</rhyme></l>
        <l id="s1:l10" met="2" type="-+">Van uw <rhyme label="e" type="m" corresp="#s1:l9">ghesicht</rhyme>,</l>
        <l id="s1:l11" met="5" type="-+">Myn hert' in alle swarigheydt <rhyme label="e" type="m" corresp="#s1:l9">verlicht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">O Beeldt vol <rhyme label="a" type="m">aerdigheydt</rhyme>,</l>
        <l id="s2:l2" met="5" type="-+">Mirakel, van Menschelycke <rhyme label="a" type="m" corresp="#s2:l1">schoonigheydt</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Uw' handen <rhyme label="b" type="m">zyn</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">Uw' tanden <rhyme label="b" type="m" corresp="#s2:l3">zyn</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Ghelyck ivoor soo wit en <rhyme label="b" type="m" corresp="#s2:l3">reyn</rhyme>,</l>
        <l id="s2:l6" met="2" type="-+">Uw' oogen’ die <rhyme label="c" type="f">toogen</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">Beset’ en <rhyme label="d" type="m">net</rhyme>,</l>
        <l id="s2:l8" met="2" type="-+">En swert als <rhyme label="d" type="m" corresp="#s2:l7">get</rhyme>,</l>
        <l id="s2:l9" met="2" type="+-">Uw soet <rhyme label="e" type="m">ghelaet</rhyme>.</l>
        <l id="s2:l10" met="2" type="-+">En wesen <rhyme label="e" type="m" corresp="#s2:l9">staet</rhyme>,</l>
        <l id="s2:l11" met="5" type="-+">Soo schoon ghelyck den gulden <rhyme label="e" type="m" corresp="#s2:l9">dagheraet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ghy zyt soet als een <rhyme label="a" type="m">Druyf</rhyme>,</l>
        <l id="s3:l2" met="5" type="-+">Eenvoudig, gelyck een lieve <rhyme label="a" type="m" corresp="#s3:l1">Tortel-Duyf</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Schoon als een <rhyme label="b" type="m">Pauw</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">Vers als den <rhyme label="b" type="m" corresp="#s3:l3">dauw</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Gy zyt een Perel van een <rhyme label="b" type="m" corresp="#s3:l3">Vrouw</rhyme>:</l>
        <l id="s3:l6" met="2" type="-+">Uw' leden’ uw' <rhyme label="c" type="f">seden</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">Uw' deught’ <rhyme label="d" type="m">verheught</rhyme></l>
        <l id="s3:l8" met="2" type="-+">Myn jonghe <rhyme label="d" type="m" corresp="#s3:l7">jeught</rhyme>,</l>
        <l id="s3:l9" met="2" type="+-">Myn hert' dat <rhyme label="e" type="m">brandt</rhyme>,</l>
        <l id="s3:l10" met="2" type="-+">Schenckt my uw' <rhyme label="e" type="m" corresp="#s3:l9">handt</rhyme></l>
        <l id="s3:l11" met="5" type="-+">In echten bandt, tot eenen <rhyme label="e" type="m" corresp="#s3:l9">minne-pandt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

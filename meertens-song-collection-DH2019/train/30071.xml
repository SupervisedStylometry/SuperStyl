  <author>Philips van Marnix van Sint Aldegonde</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">WEl salich is end recht <rhyme label="a" type="f">voirspoedich</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Die God van herten vreest <rhyme label="a" type="f" corresp="#s1:l1">ootmoedich</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">End is tot sijn woirt gantz <rhyme label="b" type="f">genegen</rhyme>.</l>
        <l id="s1:l4" met="4" type="-+">Sijn afkomst sal hier machtig <rhyme label="c" type="f">werden</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">Want tsaet der genen, die <rhyme label="c" type="f" corresp="#s1:l4">volherden</rhyme></l>
        <l id="s1:l6" met="4" type="-+">In vromicheyt, geniet den <rhyme label="b" type="f" corresp="#s1:l3">segen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Sijn huys sal, sonder yet <rhyme label="a" type="f">t'ontbreken</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Vol goets end rijckdoms altijt <rhyme label="a" type="f" corresp="#s2:l1">steken</rhyme>.</l>
        <l id="s2:l3" met="4" type="-+">Sijn vroim gemoet sal blijcken <rhyme label="b" type="f">stadich</rhyme>.</l>
        <l id="s2:l4" met="4" type="-+">God laet in duysternis den <rhyme label="c" type="f">vromen</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Een licht opgaen claer end <rhyme label="c" type="f" corresp="#s2:l4">volcomen</rhyme>:</l>
        <l id="s2:l6" met="4" type="-+">Hy is oprecht, goet end <rhyme label="b" type="f" corresp="#s2:l3">genadich</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">De vrome leent end schenckt van <rhyme label="a" type="f">tsijne</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">End handelt steets in allen <rhyme label="a" type="f" corresp="#s3:l1">schijne</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Rechtveirdig, tuchtig end met <rhyme label="b" type="f">maten</rhyme>.</l>
        <l id="s3:l4" met="4" type="-+">Een sulcke man en sal niet <rhyme label="c" type="f">wancken</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">End wie recht wandelt sonder <rhyme label="c" type="f" corresp="#s3:l4">mancken</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Sal goeden name nae hem <rhyme label="b" type="f" corresp="#s3:l3">laeten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Hy sal niet vreesen quade <rhyme label="a" type="f">maren</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Sijn hert staet vast in all' <rhyme label="a" type="f" corresp="#s4:l1">gevaren</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Mits hy op God heeft sijn <rhyme label="b" type="f">vertrouwen</rhyme>.</l>
        <l id="s4:l4" met="4" type="-+">Hy steunt vast op sijn goet <rhyme label="c" type="f">gewissen</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Tot dat hy mach (twelck niet sal <rhyme label="c" type="f" corresp="#s4:l4">missen</rhyme>)</l>
        <l id="s4:l6" met="4" type="-+">Sijn vreugt aen sijnen vyandt <rhyme label="b" type="f" corresp="#s4:l3">schouwen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Hy deylt end geeft sijn goet den <rhyme label="a" type="f">ermen</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Seer mildelicken uyt <rhyme label="a" type="f" corresp="#s5:l1">ontfermen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">End sijn gerechtheyt sal <rhyme label="b" type="f">beklijven</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Sijn horen wort te meer <rhyme label="c" type="f">verheven</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Hoe meer hy t'onder is <rhyme label="c" type="f" corresp="#s5:l4">gedreuen</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">End sal in eeren eewich <rhyme label="b" type="f" corresp="#s5:l3">blijven</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Dit sal den goddeloosen <rhyme label="a" type="f">herten</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Als sijt aenschouwen, bitter <rhyme label="a" type="f" corresp="#s6:l1">smerten</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">Sy sullen knerssen op haer <rhyme label="b" type="f">tanden</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">End van verdriet end spijt <rhyme label="c" type="f">wtdroogen</rhyme>:</l>
        <l id="s6:l5" met="4" type="-+">Want tgene daer de boos' nae <rhyme label="c" type="f" corresp="#s6:l4">poogen</rhyme></l>
        <l id="s6:l6" met="4" type="-+">Sal gaen te niet, tot haerer <rhyme label="b" type="f" corresp="#s6:l3">schanden</rhyme>.</l>
      </lg>
    </lg>
  </text>

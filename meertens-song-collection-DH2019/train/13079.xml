    <melody>O zalig heilig Bethlehem</melody>
    <categories/>
  <author>Christianus Vermeulen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">EEn Konincxken, hoort dit <rhyme label="a" type="m">verslach</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Binnen Caphern'um <rhyme label="b" type="f">ingheseten</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Dees' hadd' een Soon, die te bedde <rhyme label="a" type="m" corresp="#s1:l1">lach</rhyme></l>
        <l id="s1:l4" met="4" type="-+">In ancxt des doodts, in pijn en <rhyme label="b" type="f" corresp="#s1:l2">sweten</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Den Vader viel den Heer te <rhyme label="a" type="m">voet</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">En badt hem, dat hy neer wouw' <rhyme label="b" type="f">komen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Om met de alder-eerste <rhyme label="a" type="m" corresp="#s2:l1">spoet</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Sijn kindt, sijn soon, te moghen <rhyme label="b" type="f" corresp="#s2:l2">vromen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Gaet, sprack den Heer, u soon die <rhyme label="a" type="m">leeft</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">En hy ghegaen met snelle <rhyme label="b" type="f">voeten</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Heeft 'tsoo bevonden, als Christus <rhyme label="a" type="m" corresp="#s3:l1">heeft</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Gheseyt, van haer die hen <rhyme label="b" type="f" corresp="#s3:l2">ontmoeten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">O Jesu, kunt ghy soo <rhyme label="a" type="m">terstondt</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Ghenesen, wie sou niet <rhyme label="b" type="f">ghelooven</rhyme>?</l>
        <l id="s4:l3" met="4" type="-+">Ick bidd'u, maeckt my oock <rhyme label="a" type="m" corresp="#s4:l1">ghesondt</rhyme></l>
        <l id="s4:l4" met="4" type="-+">En doet mijn koortse mee <rhyme label="b" type="f" corresp="#s4:l2">verdooven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Mijn koorts, mijn geestelijcke <rhyme label="a" type="m">koorts</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Die tot soo vuyl soo veel <rhyme label="b" type="f">ghebreecken</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">In my des vleeschs , des werelts <rhyme label="a" type="m" corresp="#s5:l1">toorts</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Heeft doen ontfoncken, jae doen <rhyme label="b" type="f" corresp="#s5:l2">ontsteecken</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Nu ben ick heet, nu ben ick <rhyme label="a" type="m">kout</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Het hert dat jaecht my t'aller <rhyme label="b" type="f">stonden</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Na eer, na wraeck, na vleesch, na <rhyme label="a" type="m" corresp="#s6:l1">goudt</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Mijn koortsen zijn alleen mijn <rhyme label="b" type="f" corresp="#s6:l2">sonden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Gheneestse Heer, en gheeft my <rhyme label="a" type="m">sin</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Gesont, en fris te willen <rhyme label="b" type="f">wesen</rhyme>:</l>
        <l id="s7:l3" met="4" type="-+">Want ginck het naer u liefste <rhyme label="a" type="m" corresp="#s7:l1">min</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Ick waer heel kloeck, jae gantsch <rhyme label="b" type="f" corresp="#s7:l2">genesen</rhyme>.</l>
      </lg>
    </lg>
  </text>

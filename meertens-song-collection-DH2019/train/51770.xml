<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>51770</id>
    <date>
      <year-start>1811</year-start>
      <year-end>1811</year-end>
    </date>
    <tags>
      <tag standard-name="moordlied" translation="murder song">moordlied</tag>
    </tags>
    <melody>O Holland schoon gij leeft in vrede</melody>
    <categories>
      <category translation="narratives">verhalen</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ô Hemel Koning! groot van <rhyme label="a" type="m">magt</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Wat hoort men <rhyme label="b" type="f">gruwelheeden</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Al van het Menschelyk <rhyme label="a" type="m" corresp="#s1:l1">geslagt</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Zo ik uw zal <rhyme label="b" type="f" corresp="#s1:l2">ontleeden</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">'T is in 't Keyzerryk <rhyme label="c" type="m">geschied</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">By Plozk zo ik uw meld in 't <rhyme label="c" type="m" corresp="#s1:l5">Lied</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Een Christen hart moet <rhyme label="d" type="f">beeven</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Zo als ons word <rhyme label="d" type="f" corresp="#s1:l7">beschreeven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Een Dame die haar eerste <rhyme label="a" type="m">man</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Was al lang <rhyme label="b" type="f">overleeden</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Het geld dat zy bestaane <rhyme label="a" type="m" corresp="#s2:l1">kan</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Met haar dochter te <rhyme label="b" type="f" corresp="#s2:l2">leeven</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Maar ziet daar was een <rhyme label="c" type="m">Edelman</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Die sprak de moeder minlyk <rhyme label="c" type="m" corresp="#s2:l5">an</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Door veel gegronde <rhyme label="d" type="f">reeden</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Om in 't Huwelyk te <rhyme label="d" type="f" corresp="#s2:l7">treeden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">De moeder nam het voorslag <rhyme label="a" type="m">an</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Maar sprak mynheer wilt <rhyme label="b" type="f">hooren</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">'k Heb een dogter van myn eerste <rhyme label="a" type="m" corresp="#s3:l1">man</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Die moet nu van te <rhyme label="b" type="f" corresp="#s3:l2">vooren</rhyme>.</l>
        <l id="s3:l5" met="4" type="-+">Hebben, haar kinderlyk <rhyme label="c" type="m">erfdeel</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Zo kwam de Notaris op 't <rhyme label="c" type="m" corresp="#s3:l5">kasteel</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">De heer sprak laat nu <rhyme label="d" type="f">schryven</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Wat voor uw kind moet <rhyme label="d" type="f" corresp="#s3:l7">blyven</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Zo dra de dogter had <rhyme label="a" type="m">verstaan</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Dat moeder weer zal <rhyme label="b" type="f">trouwen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Is zy na haar minnaar <rhyme label="a" type="m" corresp="#s4:l1">gegaan</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Om 't helsche kwaad te <rhyme label="b" type="f" corresp="#s4:l2">brouwen</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Ik weet mynheer dat gy myn <rhyme label="c" type="m">mint</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">En ik ben tot den trouw <rhyme label="c" type="m" corresp="#s4:l5">gezind</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Maar eer wy 't onze <rhyme label="d" type="f">sluiten</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Moeten wy een huwlyk <rhyme label="d" type="f" corresp="#s4:l7">stuiten</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Myn moeder wil ten <rhyme label="a" type="m">tweedemaal</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Weer in het Huwlyk <rhyme label="b" type="f">treeden</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Dat zy myn toedeeld is te <rhyme label="a" type="m" corresp="#s5:l1">schraal</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Ik ben daar niet mee te <rhyme label="b" type="f" corresp="#s5:l2">vreeden</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">'t Is maar tien duizend kroonen <rhyme label="c" type="m">geld</rhyme></l>
        <l id="s5:l6" met="4" type="-+">Maar heeft zy myn niet <rhyme label="c" type="m" corresp="#s5:l5">toegeteld</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Maar ik zal 't Huwlyk <rhyme label="d" type="f">breeken</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Ik zal haar zelfs <rhyme label="d" type="f" corresp="#s5:l7">doorsteeken</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Daarom zoet Lief leen myn u <rhyme label="a" type="m">hand</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Myn moeder die moet <rhyme label="b" type="f">sterven</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Hy sprak 'k ben Pagter van 't <rhyme label="a" type="m" corresp="#s6:l1">Land</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Ik wil geen bloedgeld <rhyme label="b" type="f" corresp="#s6:l2">erven</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Wat wilt gy dat ik Moorden <rhyme label="c" type="m">zou</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">U moeder, zulk een ed'le <rhyme label="c" type="m" corresp="#s6:l5">Vrouw</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Wat stelt gy myn te <rhyme label="d" type="f">vooren</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">'k Wil van uw niets meer <rhyme label="d" type="f" corresp="#s6:l7">horen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Hoe listig spreekt zy haar minnaar <rhyme label="a" type="m">aan</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Met duiyels list en <rhyme label="b" type="f">reden</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">'k knegt nu meiden laaten <rhyme label="a" type="m" corresp="#s7:l1">gaan</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Ver weg om <rhyme label="b" type="f" corresp="#s7:l2">bezigheeden</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">En als myn moede, is <rhyme label="c" type="m">vermoord</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Dan roepen wy de Boeren <rhyme label="c" type="m" corresp="#s7:l5">voort</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">En zeggen aan die <rhyme label="d" type="f">vrinden</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Dat haar een Wolf <rhyme label="d" type="f" corresp="#s7:l7">verflinden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Nu leent de minnaar zyne <rhyme label="a" type="m">hand</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">En gaan de moeder <rhyme label="b" type="f">moorden</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Maar 's dogters wreedheid neemt geen <rhyme label="a" type="m" corresp="#s8:l1">stand</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Na zy het hart <rhyme label="b" type="f" corresp="#s8:l2">doorboorden</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Snyd nog de keel af heel <rhyme label="c" type="m">verwoed</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">grypt met haar hand geverft in 't <rhyme label="c" type="m" corresp="#s8:l5">bloed</rhyme></l>
        <l id="s8:l7" met="3" type="-+">De Tong om uit te <rhyme label="d" type="f">trekken</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Dat men geen moord kon <rhyme label="d" type="f" corresp="#s8:l7">ondekken</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Nu al 't moorden was <rhyme label="a" type="m">gedaan</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Om God nog meer te <rhyme label="b" type="f">tergen</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Toen greepen zy de onschuld <rhyme label="a" type="m" corresp="#s9:l1">aan</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Om uit de weg te <rhyme label="b" type="f" corresp="#s9:l2">bergen</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">En draagde haar de Tuindeur <rhyme label="c" type="m">uit</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">En riepen met een hart <rhyme label="c" type="m" corresp="#s9:l5">geluid</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Ach help tog goede <rhyme label="d" type="f">vrinden</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Ziet hoe wy moeder <rhyme label="d" type="f" corresp="#s9:l7">vinden</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">De Boere kwamen alle <rhyme label="a" type="m">aan</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">De dogter stond en <rhyme label="b" type="f">treurde</rhyme>;</l>
        <l id="s10:l3" met="4" type="-+">En sprak dat heeft een Wolf <rhyme label="a" type="m" corresp="#s10:l1">gedaan</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Die myn moeder <rhyme label="b" type="f" corresp="#s10:l2">verscheurde</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Een van de Boere zag haar <rhyme label="c" type="m">aan</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">En sprak dat heeft geen <rhyme label="c" type="m" corresp="#s10:l5">Wolfgedaan</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">'T zy wie het heeft <rhyme label="d" type="f">gedaane</rhyme>,</l>
        <l id="s10:l8" met="3" type="-+">Hier is een moord <rhyme label="d" type="f" corresp="#s10:l7">gedaane</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Een ander greep de minnaar <rhyme label="a" type="m">aan</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Vraagt hoe kunt gy zo <rhyme label="b" type="f">beeven</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">'k Loof gy hebt zelver mee <rhyme label="a" type="m" corresp="#s11:l1">gedaan</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">En bragt Mevrouw om 't <rhyme label="b" type="f" corresp="#s11:l2">leeven</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Ik merk 't, ô gy loose <rhyme label="c" type="m">kwant</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">Uw Hair is in haar doode <rhyme label="c" type="m" corresp="#s11:l5">hand</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">Wy willen, gy zult <rhyme label="d" type="f">zeggen</rhyme>,</l>
        <l id="s11:l8" met="3" type="-+">Hoe Mevrouw hier komt te <rhyme label="d" type="f" corresp="#s11:l7">leggen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">De dogter sprak ag vrienden <rhyme label="a" type="m">hoort</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Ik zal het uw <rhyme label="b" type="f">verhaalen</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Wy hebben moeder zelfs <rhyme label="a" type="m" corresp="#s12:l1">vermoord</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Ik bragt zyn deugd aan 't <rhyme label="b" type="f" corresp="#s12:l2">dwalen</rhyme>,</l>
        <l id="s12:l5" met="4" type="-+">De Heere zeide heel <rhyme label="c" type="m">verwoed</rhyme>,</l>
        <l id="s12:l6" met="4" type="-+">Vergiet een kind haars moeders <rhyme label="c" type="m" corresp="#s12:l5">bloed</rhyme></l>
        <l id="s12:l7" met="3" type="-+">Zy bragten haar <rhyme label="d" type="f">gevangen</rhyme>,</l>
        <l id="s12:l8" met="3" type="-+">Om straf voor 't kwaad te <rhyme label="d" type="f" corresp="#s12:l7">erlangen</rhyme></l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Den Regter heeft van God 't <rhyme label="a" type="m">zwaard</rhyme></l>
        <l id="s13:l2" met="3" type="-+">Om 't Vonnis uit te <rhyme label="b" type="f">spreeken</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">En vraagt hoe kunt gy zo <rhyme label="a" type="m" corresp="#s13:l1">ontaard</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Uw Moeders hart <rhyme label="b" type="f" corresp="#s13:l2">doorsteken</rhyme>,</l>
        <l id="s13:l5" met="4" type="-+">Beken, en zie uw minnaar <rhyme label="c" type="m">staan</rhyme>,</l>
        <l id="s13:l6" met="4" type="-+">Heeft hy niet mee de moord <rhyme label="c" type="m" corresp="#s13:l5">gedaan</rhyme>?</l>
        <l id="s13:l7" met="3" type="-+">Want uit uw angst en <rhyme label="d" type="f">vreezen</rhyme>,</l>
        <l id="s13:l8" met="3" type="-+">Is uwe schuld te <rhyme label="d" type="f" corresp="#s13:l7">leezen</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Mon Regters, ach! het is <rhyme label="a" type="m">gedaan</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Wy kunnen niet <rhyme label="b" type="f">ontkennen</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Wy hebben zaam de moord <rhyme label="a" type="m" corresp="#s14:l1">gedaan</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">Straf ons die schuldig <rhyme label="b" type="f" corresp="#s14:l2">bennen</rhyme>,</l>
        <l id="s14:l5" met="4" type="-+">Ik heb zyn edel hart <rhyme label="c" type="m">verleid</rhyme>,</l>
        <l id="s14:l6" met="4" type="-+">Om dat myn moeder wierd <rhyme label="c" type="m" corresp="#s14:l5">gevreid</rhyme>,</l>
        <l id="s14:l7" met="3" type="-+">Ging ik dit kwaad <rhyme label="d" type="f">verzinnen</rhyme>,</l>
        <l id="s14:l8" met="3" type="-+">Om 't geld en goed te <rhyme label="d" type="f" corresp="#s14:l7">winnen</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Zie nu het schrikkelyk <rhyme label="a" type="m">onderscheid</rhyme>,</l>
        <l id="s15:l2" met="3" type="-+">Van haar wellustig <rhyme label="b" type="f">leeven</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">Den Priester zegt maak u <rhyme label="a" type="m" corresp="#s15:l1">bereid</rhyme>,</l>
        <l id="s15:l4" met="3" type="-+">Wil uw tot God <rhyme label="b" type="f" corresp="#s15:l2">begeeven</rhyme>.</l>
        <l id="s15:l5" met="4" type="-+">Want zeker in een korte <rhyme label="c" type="m">tyd</rhyme>,</l>
        <l id="s15:l6" met="4" type="-+">Raakt gy uw jeugdig leeven <rhyme label="c" type="m" corresp="#s15:l5">kwyt</rhyme>,</l>
        <l id="s15:l7" met="3" type="-+">Wat staat uw dan te <rhyme label="d" type="f">wagten</rhyme>,</l>
        <l id="s15:l8" met="3" type="-+">Als gy Gods hulp <rhyme label="d" type="f" corresp="#s15:l7">veragten</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Ach! dat elk die dit leezen <rhyme label="a" type="m">zal</rhyme>,</l>
        <l id="s16:l2" met="3" type="-+">Mogt uit dit voorval <rhyme label="b" type="f">leeren</rhyme>,</l>
        <l id="s16:l3" met="4" type="-+">Dat geld brengt menig tot den <rhyme label="a" type="m" corresp="#s16:l1">val</rhyme>,</l>
        <l id="s16:l4" met="3" type="-+">Al die 't onrecht <rhyme label="b" type="f" corresp="#s16:l2">begeeren</rhyme>,</l>
        <l id="s16:l5" met="4" type="-+">Daarom ô Jeugd leer hoe het <rhyme label="c" type="m">gaat</rhyme>,</l>
        <l id="s16:l6" met="4" type="-+">Dat God is straffer van het <rhyme label="c" type="m" corresp="#s16:l5">kwaad</rhyme>,</l>
        <l id="s16:l7" met="3" type="-+">En elk van al zyn <rhyme label="d" type="f">leeven</rhyme>,</l>
        <l id="s16:l8" met="3" type="-+">Eens rekenschap zal <rhyme label="d" type="f" corresp="#s16:l7">geeven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

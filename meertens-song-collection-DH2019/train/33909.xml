  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="5" type="+-">Jesum nooden eens een <rhyme label="a" type="m">Pharisee</rhyme>,</l>
        <l id="s1:l2" met="6" type="+-">Dat hy komen wou te gast, en hy gingh <rhyme label="a" type="m" corresp="#s1:l1">mee</rhyme>,</l>
        <l id="s1:l3" met="5" type="+-">Ende als hy aen de tafel <rhyme label="b" type="m">sat</rhyme>,</l>
        <l id="s1:l4" met="5" type="+-">Den Jode sagh dat hy ongewassen <rhyme label="b" type="m" corresp="#s1:l3">at</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="5" type="+-">Jesus seydt, terwijl hy was te <rhyme label="a" type="m">gast</rhyme>,</l>
        <l id="s2:l2" met="6" type="+-">Gy-lie Phariseen den Kelk van buyten <rhyme label="a" type="m" corresp="#s2:l1">wast</rhyme>;</l>
        <l id="s2:l3" met="5" type="+-">Maer het geene binnen in u <rhyme label="b" type="m">leydt</rhyme>,</l>
        <l id="s2:l4" met="5" type="+-">Is roof, en dievery, <rhyme label="b" type="m" corresp="#s2:l3">onrechtvaerdigheydt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="5" type="+-">Dwasen! die het buytenst heeft <rhyme label="a" type="m">gemaekt</rhyme>,</l>
        <l id="s3:l2" met="6" type="+-">Heeft die 't binnenst ook niet desgelijks <rhyme label="a" type="m" corresp="#s3:l1">geraekt</rhyme>?</l>
        <l id="s3:l3" met="5" type="+-">Maer noghtans, het geen der nogh <rhyme label="b" type="m">resteert</rhyme>,</l>
        <l id="s3:l4" met="5" type="+-">Geeft alemis, en soo uwe sond <rhyme label="b" type="m" corresp="#s3:l3">afweert</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="5" type="+-">Wee u, Phariseën, die 't kleyn <rhyme label="a" type="m">saet</rhyme>,</l>
        <l id="s4:l2" met="6" type="+-">Munt, en ruyt, en moes vertient; maer <rhyme label="a" type="m" corresp="#s4:l1">overslaet</rhyme></l>
        <l id="s4:l3" met="5" type="+-">'t Oordeel, en Goodts liefd', dat most <rhyme label="b" type="m">gedaen</rhyme>;</l>
        <l id="s4:l4" met="5" type="+-">Maer dit en moest men ook geensins <rhyme label="b" type="m" corresp="#s4:l3">overslaen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="5" type="+-">Wee u, Phariseën, die <rhyme label="a" type="m">begeert</rhyme></l>
        <l id="s5:l2" met="6" type="+-">In de Synagoogh met d'eerste plaets <rhyme label="a" type="m" corresp="#s5:l1">ge-eert</rhyme>,</l>
        <l id="s5:l3" met="5" type="+-">Gy op d'Merkt gegroet wilt sijn <rhyme label="b" type="m">gewent</rhyme>.</l>
        <l id="s5:l4" met="5" type="+-">Wee die graf-steeden bent, d'menschen <rhyme label="b" type="m" corresp="#s5:l3">onbekent</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="5" type="+-">Meester, sey'ter eenen <rhyme label="a" type="m">Wet-geleert</rhyme>,</l>
        <l id="s6:l2" met="6" type="+-">Als gy dus spreekt, gy ons dan al mee <rhyme label="a" type="m" corresp="#s6:l1">onteert</rhyme>.</l>
        <l id="s6:l3" met="5" type="+-">Wee u Wet-geleerden ook, want <rhyme label="b" type="m">gy</rhyme></l>
        <l id="s6:l4" met="5" type="+-">De lieden veel belast, g'hout u selven <rhyme label="b" type="m" corresp="#s6:l3">vry</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="5" type="+-">Wee u-lieden, die graf-steeden <rhyme label="a" type="m">bouwt</rhyme></l>
        <l id="s7:l2" met="6" type="+-">Der Propheeten; maer uw Vaderen seer <rhyme label="a" type="m" corresp="#s7:l1">stout</rhyme>,</l>
        <l id="s7:l3" met="5" type="+-">Hebben haer gedoodt: dus gy <rhyme label="b" type="m">bekent</rhyme></l>
        <l id="s7:l4" met="5" type="+-">Dat g' hare quade daet meede geeft <rhyme label="b" type="m" corresp="#s7:l3">consent</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="5" type="+-">Goodes Wijsheydt seydt, ik senden <rhyme label="a" type="m">sal</rhyme></l>
        <l id="s8:l2" met="6" type="+-">Haer Propheeten, en Apostels: uyt 't <rhyme label="a" type="m" corresp="#s8:l1">getal</rhyme></l>
        <l id="s8:l3" met="5" type="+-">Van dees, sullen sy-lie dan slaen <rhyme label="b" type="m">doot</rhyme>,</l>
        <l id="s8:l4" met="5" type="+-">Met bitterheyt, en haet, doen vervolgingh <rhyme label="b" type="m" corresp="#s8:l3">groot</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="5" type="+-">Dus 't Propheeten bloedt nogh werden <rhyme label="a" type="m">sal</rhyme></l>
        <l id="s9:l2" met="6" type="+-">Af-ge-eyst van dese generati, <rhyme label="a" type="m" corresp="#s9:l1">al</rhyme></l>
        <l id="s9:l3" met="5" type="+-">Van d'eerst Abel tot <rhyme label="b" type="m">Zacharias</rhyme>,</l>
        <l id="s9:l4" met="5" type="+-">Die tusschen Tempel, en 't Autaer gedoodt <rhyme label="b" type="m" corresp="#s9:l3">was</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="5" type="+-">Wee u, Phariseën, die <rhyme label="a" type="m">ontfaen</rhyme></l>
        <l id="s10:l2" met="6" type="+-">Hebt des Wijsheydts-sleutel, en wilt niet <rhyme label="a" type="m" corresp="#s10:l1">ingaen</rhyme>,</l>
        <l id="s10:l3" met="5" type="+-">Ende die wel willen, konnen <rhyme label="b" type="m">niet</rhyme>,</l>
        <l id="s10:l4" met="5" type="+-">Om dat gy-lieden haer loosselijk <rhyme label="b" type="m" corresp="#s10:l3">verbiet</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="5" type="+-">Als Heer Iesus sprak tot haer dees <rhyme label="a" type="m">reen</rhyme>,</l>
        <l id="s11:l2" met="6" type="+-">Hebben d'Wet-geleerden en de <rhyme label="a" type="m" corresp="#s11:l1">Phariseen</rhyme></l>
        <l id="s11:l3" met="5" type="+-">Hem al weer-gestaen; en sochten <rhyme label="b" type="m">voort</rhyme></l>
        <l id="s11:l4" met="5" type="+-">Om hem te lasteren, 't een of 't ander <rhyme label="b" type="m" corresp="#s11:l3">woort</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="5" type="+-">O verblinde Phariseën <rhyme label="a" type="m">quaet</rhyme>,</l>
        <l id="s12:l2" met="6" type="+-">Die soo vast op uwe eygen sinnen <rhyme label="a" type="m" corresp="#s12:l1">staet</rhyme>,</l>
        <l id="s12:l3" met="5" type="+-">Gy en wilt van niemant sijn <rhyme label="b" type="m">geleert</rhyme>,</l>
        <l id="s12:l4" met="5" type="+-">Daerom gy nimmermeer van uw sond' <rhyme label="b" type="m" corresp="#s12:l3">bekeert</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Jesu Heer, mijn goede <rhyme label="a" type="m">Godt</rhyme> !</l>
        <l id="s1:l2" met="4" type="-+">Mijn Saligheyt ! mijn hooghste <rhyme label="a" type="m" corresp="#s1:l1">lodt</rhyme> !</l>
        <l id="s1:l3" met="4" type="-+">Als ick u lieve Naem hoor <rhyme label="b" type="f">noemen</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Soo wil mijn Ziele van u <rhyme label="b" type="f" corresp="#s1:l3">roemen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">U Naem in mijn hert <rhyme label="a" type="m">danckbaerheyt</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">En lof steeds op mijn tonghe <rhyme label="a" type="m" corresp="#s2:l1">leyt</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">En dwinght mijn sinnen nu te <rhyme label="b" type="f">dichten</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Om u te eeren, my te <rhyme label="b" type="f" corresp="#s2:l3">stichten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Want Salighmaker is u <rhyme label="a" type="m">Naem</rhyme>:</l>
        <l id="s3:l2" met="4" type="-+">Hoe over-soet ! hoe recht <rhyme label="a" type="m" corresp="#s3:l1">bequaem</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Heb ick dees' lieve Naem <rhyme label="b" type="f">bevonden</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Te zijn een balsem in mijn <rhyme label="b" type="f" corresp="#s3:l3">wonden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">U soete Naem mijn Ziel <rhyme label="a" type="m">verheucht</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">U waerde Naem leydt my ter <rhyme label="a" type="m" corresp="#s4:l1">deucht</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Door uwen Naem werd' ick <rhyme label="b" type="f">ghedreven</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Om heyligh tot u eer te <rhyme label="b" type="f" corresp="#s4:l3">leven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Wanneer de Sathan my <rhyme label="a" type="m">verdoemt</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Mijn Ziel dan van u Name <rhyme label="a" type="m" corresp="#s5:l1">roemt</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Ick voel u troost, En segh dan, <rhyme label="b" type="f">desen</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Die sal mijn Salighmaecker <rhyme label="b" type="f" corresp="#s5:l3">wesen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Mijn Sonden zijn seer swaer en <rhyme label="a" type="m">groot</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Maer Jesus door sijn bitt're <rhyme label="a" type="m" corresp="#s6:l1">Doot</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Die kan de swaerte licht <rhyme label="b" type="f">op-halen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Ten vollen all' mijn schuldt <rhyme label="b" type="f" corresp="#s6:l3">betalen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Sijn Naem de Saligheyt <rhyme label="a" type="m">belooft</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Den ghenen die in hem <rhyme label="a" type="m" corresp="#s7:l1">ghelooft</rhyme>:</l>
        <l id="s7:l3" met="4" type="-+">En ick gheloof: Sal ick dan <rhyme label="b" type="f">vreesen</rhyme> ?</l>
        <l id="s7:l4" met="4" type="-+">Hy wil mijn Salighmaecker <rhyme label="b" type="f" corresp="#s7:l3">wesen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">HY roept, al die beladen <rhyme label="a" type="m">zijn</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Hy neemt haer last, geneest haer <rhyme label="a" type="m" corresp="#s8:l1">pijn</rhyme>:</l>
        <l id="s8:l3" met="4" type="-+">Ick koom tot hem, seer swaer <rhyme label="b" type="f">geladen</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Benaut, gheperst, door mijn <rhyme label="b" type="f" corresp="#s8:l3">misdaden</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Sijn goedtheyt nimmermeer <rhyme label="a" type="m">verstoot</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Den Sondaer die hy vriend'lijck <rhyme label="a" type="m" corresp="#s9:l1">noodt</rhyme>:</l>
        <l id="s9:l3" met="4" type="-+">Hy wil haer om sijn Naem <rhyme label="b" type="f">ontfarmen</rhyme></l>
        <l id="s9:l4" met="4" type="-+">En nemen gunstigh in sijn <rhyme label="b" type="f" corresp="#s9:l3">armen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Woont in my, Jesu, met u <rhyme label="a" type="m">Geest</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Op dat mijn Ziel niet anghstigh <rhyme label="a" type="m" corresp="#s10:l1">vreest</rhyme>:</l>
        <l id="s10:l3" met="4" type="-+">Als maer alleen het doen der <rhyme label="b" type="f">sonden</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Een oorsaeck van u droeve <rhyme label="b" type="f" corresp="#s10:l3">wonden</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Een oorsaeck dat ick treuren <rhyme label="a" type="m">moet</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Vaeck uyt my perst een <rhyme label="a" type="m" corresp="#s11:l1">tranen-vloet</rhyme>:</l>
        <l id="s11:l3" met="4" type="-+">Och ! wilt dees' droefheyt van my <rhyme label="b" type="f">weeren</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">O ! Jesu Heer, u Naem ter <rhyme label="b" type="f" corresp="#s11:l3">eeren</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">U Naem die troost my hier in <rhyme label="a" type="m">noodt</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Sal zijn een Trooster in mijn <rhyme label="a" type="m" corresp="#s12:l1">doodt</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">In u Naem sal ick me'e <rhyme label="b" type="f">verrijsen</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Om eeuwighlijck u Naem te <rhyme label="b" type="f" corresp="#s12:l3">prijsen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

    <tags>
      <tag standard-name="heiligenlied" translation="saint song">heiligenlied</tag>
    </tags>
    <melody>Engelse fortuin</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Willem de Swaen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">'k GRoet U <rhyme label="a" type="m">Andries</rhyme>!</l>
        <l id="s1:l2" met="3" type="-+">Apostel van ons' <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">Die eertijds <rhyme label="a" type="m" corresp="#s1:l1">blies</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Met yver Christus <rhyme label="b" type="m" corresp="#s1:l2">leer</rhyme>.</l>
        <l id="s1:l5" met="2" type="-+">Ick kom <rhyme label="c" type="m">be-sien</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Hoe Ghy voor 't <rhyme label="d" type="m">OpperGoed</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Met 's harts <rhyme label="c" type="m" corresp="#s1:l5">verblie'n</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Vergoten hebt u <rhyme label="d" type="m" corresp="#s1:l6">bloed</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Ghy hebt <rhyme label="a" type="m">gedraeft</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Veel jaren sonder <rhyme label="b" type="m">rust</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Ghy hebt <rhyme label="a" type="m" corresp="#s2:l1">geslaeft</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Met wonderlijcke <rhyme label="b" type="m" corresp="#s2:l2">lust</rhyme>:</l>
        <l id="s2:l5" met="2" type="-+">Ghy hebt het <rhyme label="c" type="m">Volck</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Met uwe <rhyme label="d" type="m">monds-trompet</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">Als Christus <rhyme label="c" type="m" corresp="#s2:l5">Tolck</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Verkondight Godes <rhyme label="d" type="m" corresp="#s2:l6">Wet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Door Goods <rhyme label="a" type="m">bestier</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Hebt vromigh Ghy <rhyme label="b" type="m">geleert</rhyme></l>
        <l id="s3:l3" met="2" type="-+">Die van <rhyme label="a" type="m" corresp="#s3:l1">Epier</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">G' hebt haer tot God <rhyme label="b" type="m" corresp="#s3:l2">bekeert</rhyme>.</l>
        <l id="s3:l5" met="2" type="-+">Den wreeden <rhyme label="c" type="m">Schyt</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Hebt Ghy uyt 't <rhyme label="d" type="m">Heydendom</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">Tot Satans <rhyme label="c" type="m" corresp="#s3:l5">spijt</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Geleydt tot 't <rhyme label="d" type="m" corresp="#s3:l6">Christendom</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Het Traec'sche <rhyme label="a" type="m">Land</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Hebt Ghy uyt 's Vyands <rhyme label="b" type="m">roof</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">En uyt den <rhyme label="a" type="m" corresp="#s4:l1">brand</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Verlost, door 't waer <rhyme label="b" type="m" corresp="#s4:l2">Geloof</rhyme>.</l>
        <l id="s4:l5" met="2" type="-+">Een ander <rhyme label="c" type="m">stad</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">En land, hebt Ghy <rhyme label="d" type="m">gesocht</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">Na dat Ghy <rhyme label="c" type="m" corresp="#s4:l5">hadt</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Haer saligheyd <rhyme label="d" type="m" corresp="#s4:l6">gevroght</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Wat sult Ghy <rhyme label="a" type="m">doen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">O waerde Godes <rhyme label="b" type="m">vrind</rhyme>?</l>
        <l id="s5:l3" met="2" type="-+">Ghy sult daer <rhyme label="a" type="m" corresp="#s5:l1">bloe'n</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Daerom U wel <rhyme label="b" type="m" corresp="#s5:l2">versint</rhyme>.</l>
        <l id="s5:l5" met="2" type="-+">Wech met dees <rhyme label="c" type="m">praet</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">'t Zijn al te slechte <rhyme label="d" type="m">re'en</rhyme>;</l>
        <l id="s5:l7" met="2" type="-+">Andraeas <rhyme label="c" type="m" corresp="#s5:l5">gaet</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Blymoedich heenen <rhyme label="d" type="m" corresp="#s5:l6">tre'en</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Het is <rhyme label="a" type="m">geluck</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Te lijden voor den <rhyme label="b" type="m">Heer</rhyme>;</l>
        <l id="s6:l3" met="2" type="-+">Smart, ende <rhyme label="a" type="m" corresp="#s6:l1">druck</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Zijn anders niet als <rhyme label="b" type="m" corresp="#s6:l2">eer</rhyme>.</l>
        <l id="s6:l5" met="2" type="-+">Andraeas <rhyme label="c" type="m">acht</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Geluckigh sich te <rhyme label="d" type="m">zijn</rhyme>,</l>
        <l id="s6:l7" met="2" type="-+">Ja siet! Hy <rhyme label="c" type="m" corresp="#s6:l5">lacht</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Hy vrolijck is in <rhyme label="d" type="m" corresp="#s6:l6">pijn</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="2" type="-+">AEgaeas <rhyme label="a" type="m">kan</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Op gheenderley <rhyme label="b" type="m">manier</rhyme></l>
        <l id="s7:l3" met="2" type="-+">Dees waerde <rhyme label="a" type="m" corresp="#s7:l1">Man</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Benemen sijn <rhyme label="b" type="m" corresp="#s7:l2">playsier</rhyme>:</l>
        <l id="s7:l5" met="2" type="-+">'t Zy dat hy <rhyme label="c" type="m">smijt</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Of geeselt desen <rhyme label="d" type="m">Held</rhyme>,</l>
        <l id="s7:l7" met="2" type="-+">Andraeas <rhyme label="c" type="m" corresp="#s7:l5">lijdt</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Verduldich dit <rhyme label="d" type="m" corresp="#s7:l6">geweld</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="2" type="-+">Ja <rhyme label="a" type="m">alhoewel</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Met sweepen wierdt <rhyme label="b" type="m">gescheurt</rhyme>,</l>
        <l id="s8:l3" met="2" type="-+">Sijn suyv're <rhyme label="a" type="m" corresp="#s8:l1">vel</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Hy evenwel niet <rhyme label="b" type="m" corresp="#s8:l2">treurt</rhyme>.</l>
        <l id="s8:l5" met="2" type="-+">Sijn dierbaer <rhyme label="c" type="m">bloed</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Liep uyt als eene <rhyme label="d" type="m">stroom</rhyme>,</l>
        <l id="s8:l7" met="2" type="-+">Hy wel <rhyme label="c" type="m" corresp="#s8:l5">gemoedt</rhyme></l>
        <l id="s8:l8" met="3" type="-+">God loofden even <rhyme label="d" type="m" corresp="#s8:l6">vroom</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="2" type="-+">Soo heeft tot d' <rhyme label="a" type="m">end</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Andraeas vroom gestre' <rhyme label="b" type="m">en</rhyme>,</l>
        <l id="s9:l3" met="2" type="-+">In sijne <rhyme label="a" type="m" corresp="#s9:l1">torment</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Heeft Hy sijn Heer <rhyme label="b" type="m" corresp="#s9:l2">gebe'en</rhyme>.</l>
        <l id="s9:l5" met="2" type="-+">Hoort aen, hoort <rhyme label="c" type="m">aen</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Wat dat Hy heeft <rhyme label="d" type="m">geseyt</rhyme>,</l>
        <l id="s9:l7" met="2" type="-+">Als Hy sagh <rhyme label="c" type="m" corresp="#s9:l5">staen</rhyme></l>
        <l id="s9:l8" met="3" type="-+">Het Kruys voor Hem <rhyme label="d" type="m" corresp="#s9:l6">bereydt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="2" type="-+">O waerdich <rhyme label="a" type="m">hout</rhyme>!</l>
        <l id="s10:l2" met="3" type="-+">Ick heb na u <rhyme label="b" type="m">getracht</rhyme>,</l>
        <l id="s10:l3" met="2" type="-+">Meer als na <rhyme label="a" type="m" corresp="#s10:l1">gout</rhyme>;</l>
        <l id="s10:l4" met="3" type="-+">Ick heb u langh <rhyme label="b" type="m" corresp="#s10:l2">verwacht</rhyme>.</l>
        <l id="s10:l5" met="2" type="-+">Ick koom u <rhyme label="c" type="m">by</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Om-armen wil ick <rhyme label="d" type="m">u</rhyme>;</l>
        <l id="s10:l7" met="2" type="-+">Ick ben seer <rhyme label="c" type="m" corresp="#s10:l5">bly</rhyme>,</l>
        <l id="s10:l8" met="3" type="-+">Dat ick sal sterven <rhyme label="d" type="m" corresp="#s10:l6">nu</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="2" type="-+">O grooten <rhyme label="a" type="m">Sant</rhyme>!</l>
        <l id="s11:l2" met="3" type="-+">Mijn tranen bersten <rhyme label="b" type="m">uyt</rhyme>,</l>
        <l id="s11:l3" met="2" type="-+">Als liefdens <rhyme label="a" type="m" corresp="#s11:l1">brand</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Ick merck uyt dit <rhyme label="b" type="m" corresp="#s11:l2">geluydt</rhyme>.</l>
        <l id="s11:l5" met="2" type="-+">Reyst vry <rhyme label="c" type="m">om-hoogh</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Reyst vry na 's Hemels <rhyme label="d" type="m">zael</rhyme>,</l>
        <l id="s11:l7" met="2" type="-+">Maer slaet u <rhyme label="c" type="m" corresp="#s11:l5">oogh</rhyme></l>
        <l id="s11:l8" met="3" type="-+">Op ons hier <rhyme label="d" type="m" corresp="#s11:l6">altemael</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="2" type="-+">Bidt dat ick <rhyme label="a" type="m">mach</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Op 't laetsten, als een <rhyme label="b" type="m">Swaen</rhyme>,</l>
        <l id="s12:l3" met="2" type="-+">Op mijnen <rhyme label="a" type="m" corresp="#s12:l1">dagh</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Als ick van hier sal <rhyme label="b" type="m" corresp="#s12:l2">gaen</rhyme>,</l>
        <l id="s12:l5" met="2" type="-+">Met groote <rhyme label="c" type="m">lust</rhyme></l>
        <l id="s12:l6" met="3" type="-+">Mijn Jesu singen <rhyme label="d" type="m">lof</rhyme>,</l>
        <l id="s12:l7" met="2" type="-+">Die my sijn <rhyme label="c" type="m" corresp="#s12:l5">Rust</rhyme></l>
        <l id="s12:l8" met="3" type="-+">Wil geven in sijn <rhyme label="d" type="m" corresp="#s12:l6">hof</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

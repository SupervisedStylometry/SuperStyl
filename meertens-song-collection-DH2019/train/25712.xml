  <author>Leenaert Clock</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Voor u, O Godt, verschijnen <rhyme label="a" type="m">wy</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Onsen noot u te <rhyme label="b" type="f">claghen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Staet ons doch met ghenaden <rhyme label="a" type="m" corresp="#s1:l1">by</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Ghelijck tot allen <rhyme label="b" type="f" corresp="#s1:l2">daghen</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Ghy met u goetheyt (Heer) <rhyme label="c" type="m">bystondt</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Die hier soecken van herten <rhyme label="c" type="m" corresp="#s1:l5">grondt</rhyme></l>
        <l id="s1:l7" met="3" type="-+">V alleen te <rhyme label="b" type="f" corresp="#s1:l2">behaghen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Erbermt onser, Christe Gods <rhyme label="a" type="m">Soon</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Laet ons doch cracht <rhyme label="b" type="f">verwerven</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Maeckt ons wacker tot deuchden <rhyme label="a" type="m" corresp="#s2:l1">schoon</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">D’eeuwich Rijck te <rhyme label="b" type="f" corresp="#s2:l2">beerven</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Dat wy den nieuwen Mensch met <rhyme label="c" type="m">vlijt</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Waer nemen hier in onsen <rhyme label="c" type="m" corresp="#s2:l5">tijt</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">De Weerelt heel <rhyme label="b" type="f" corresp="#s2:l2">afsterven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Matich in al ons woorden <rhyme label="a" type="m">reyn</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Die, en ons werck <rhyme label="b" type="f">betrachten</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Dat sy t’uwer eeren <rhyme label="a" type="m" corresp="#s3:l1">alleyn</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Gheschieden, en hoogh <rhyme label="b" type="f" corresp="#s3:l2">achten</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Vwen lof, eere ende <rhyme label="c" type="m">prijs</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Hier toe, liev’ Heere, maeckt ons <rhyme label="c" type="m" corresp="#s3:l5">wijs</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Sterckt ons met uwen <rhyme label="b" type="f" corresp="#s3:l2">crachten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Kent Heer ons hert, en geeft ons <rhyme label="a" type="m">doch</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Een recht barmhertich <rhyme label="b" type="f">wesen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Gheduldich en sachtmoedich <rhyme label="a" type="m" corresp="#s4:l1">noch</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Dat wy in uwer <rhyme label="b" type="f" corresp="#s4:l2">vresen</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Al t’ghene dat over ons <rhyme label="c" type="m">gaet</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Te handen comt, oft hier <rhyme label="c" type="m" corresp="#s4:l5">toestaet</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Ontmoeten doch door <rhyme label="b" type="f" corresp="#s4:l2">desen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">En onse ooghen Heer <rhyme label="a" type="m">opdoet</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Om ons eyghen <rhyme label="b" type="f">ghebreken</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Te kennen, en die met <rhyme label="a" type="m" corresp="#s5:l1">demoet</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Belijden <rhyme label="b" type="f" corresp="#s5:l2">onbesweken</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Niet eens anders, maer ons <rhyme label="c" type="m">misdaet</rhyme></l>
        <l id="s5:l6" met="4" type="-+">Ons mach mishaghen vroech en <rhyme label="c" type="m" corresp="#s5:l5">laet</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Daer wy soo diep in <rhyme label="b" type="f" corresp="#s5:l2">steken</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Angst ende noot, pijn en <rhyme label="a" type="m">ellent</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Staet dennen te <rhyme label="b" type="f">verbeyden</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Die hier het tijdtlijcke <rhyme label="a" type="m" corresp="#s6:l1">bekent</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Aenhanghen en <rhyme label="b" type="f" corresp="#s6:l2">verbreyden</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Drom gheeft ons, O Heer <rhyme label="c" type="m">bequaem</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Met den ghemoede en <rhyme label="c" type="m" corresp="#s6:l5">lichaem</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Van sulcker lust te <rhyme label="b" type="f" corresp="#s6:l2">scheyden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Neemt ons tot u, en gheeft doch <rhyme label="a" type="m">ghy</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">O Heer, nae ons <rhyme label="b" type="f">verlanghen</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Een vyerighe begheerte <rhyme label="a" type="m" corresp="#s7:l1">bly</rhyme></l>
        <l id="s7:l4" met="3" type="-+">V alleen aen te <rhyme label="b" type="f" corresp="#s7:l2">hanghen</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Vereenicht moet zijn al <rhyme label="c" type="m">ghehiel</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Ons gheest, onse lichaem en <rhyme label="c" type="m" corresp="#s7:l5">ziel</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Hier toe richt doch ons <rhyme label="b" type="f" corresp="#s7:l2">ganghen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Souden wy Heer vergheten <rhyme label="a" type="m">nu</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Och neen, leert ons <rhyme label="b" type="f">bedincken</rhyme></l>
        <l id="s8:l3" met="4" type="-+">T’leven en het sterven van <rhyme label="a" type="m" corresp="#s8:l1">u</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Ghy ginckt u selfs ons <rhyme label="b" type="f" corresp="#s8:l2">schincken</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">V sachte zeden leert ons <rhyme label="c" type="m">vranck</rhyme></l>
        <l id="s8:l6" met="4" type="-+">Nae volghen al ons leven <rhyme label="c" type="m" corresp="#s8:l5">lanck</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Dit vyer doet doch <rhyme label="b" type="f" corresp="#s8:l2">ontsinckien</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Kennen leert ons, O Heere <rhyme label="a" type="m">stil</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">T’ghene dat wy hier <rhyme label="b" type="f">maken</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Op dat wy onsen eyghen <rhyme label="a" type="m" corresp="#s9:l1">wil</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Buyten gaen en <rhyme label="b" type="f" corresp="#s9:l2">versaken</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Blijven u by, in vreuchd’ en <rhyme label="c" type="m">pijn</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Int lijden ende droevich <rhyme label="c" type="m" corresp="#s9:l5">zijn</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">T’leven oft doot te <rhyme label="b" type="f" corresp="#s9:l2">smaken</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Mercken leert ons, en recht <rhyme label="a" type="m">verstaen</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Bekennen sonder <rhyme label="b" type="f">schromen</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Dat al t’ghen’ dat wy hier <rhyme label="a" type="m" corresp="#s10:l1">ontfaen</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Van u, O Heer, moet <rhyme label="b" type="f" corresp="#s10:l2">comen</rhyme>:</l>
        <l id="s10:l5" met="4" type="-+">T’comt altemael van uwer <rhyme label="c" type="m">handt</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">T’betrouwen in ons herte <rhyme label="c" type="m" corresp="#s10:l5">plant</rhyme></l>
        <l id="s10:l7" met="3" type="-+">Heel vast tot onser <rhyme label="b" type="f" corresp="#s10:l2">vromen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Ten sal uyt onsen mondt niet <rhyme label="a" type="m">gaen</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Dan loven en danck <rhyme label="b" type="f">singhen</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Als ghy dit Heer nae u <rhyme label="a" type="m" corresp="#s11:l1">vermaen</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">In ons soo gaet <rhyme label="b" type="f" corresp="#s11:l2">volbringhen</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Om dit te doen, maeckt ons <rhyme label="c" type="m">bereyt</rhyme></l>
        <l id="s11:l6" met="4" type="-+">Tot lof van uwe <rhyme label="c" type="m" corresp="#s11:l5">Majesteyt</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">Soo sal ons hert <rhyme label="b" type="f" corresp="#s11:l2">opspringhen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

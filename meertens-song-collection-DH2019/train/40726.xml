  <author>Gysbert Japicx</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">IN from minsch' mierckt op <rhyme label="a" type="m">God</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">In from hert eag 't op God’ Ja <rhyme label="a" type="m" corresp="#s1:l1">God</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Hy werzet wrâd, in wrâdsche <rhyme label="b" type="m">dwaen</rhyme>,</l>
        <l id="s1:l4" met="2" type="+-">Neam't yerdsch' <rhyme label="c" type="m">schijn</rhyme></l>
        <l id="s1:l5" met="2" type="+-">Swiet <rhyme label="c" type="m" corresp="#s1:l4">fornijn</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">In al her jaen <rhyme label="b" type="m" corresp="#s1:l3">forjaen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Hy reck'net naet in <rhyme label="a" type="m">mijtt'</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Hy wirddig't naet in mijtt'’ Ja <rhyme label="a" type="m" corresp="#s2:l1">mijtt'</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Al 't jinghe allijck in schaed' <rhyme label="b" type="m">fordwijnn't</rhyme>,</l>
        <l id="s2:l4" met="2" type="+-">All het <rhyme label="c" type="m">eyn't</rhyme>,</l>
        <l id="s2:l5" met="2" type="+-"><rhyme label="c" type="m" corresp="#s2:l4">Motte-scheyn't</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">OEf rôstget, hoe 't eack <rhyme label="b" type="m" corresp="#s2:l3">schijnn't</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Hy timm'ret naet op 't <rhyme label="a" type="m">san</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Hy trouw't nogh bouw't op san’ Ja <rhyme label="a" type="m" corresp="#s3:l1">san</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Op wetter-winst, op <rhyme label="b" type="m">weyd-forstan</rhyme></l>
        <l id="s3:l4" met="2" type="+-">Djier ynn' <rhyme label="c" type="m">fjild</rhyme>,</l>
        <l id="s3:l5" met="2" type="+-">Kreft, oef <rhyme label="c" type="m" corresp="#s3:l4">jild</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Nogh <rhyme label="b" type="m" corresp="#s3:l3">siette'-oon-sietten-Lan</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ynne' hijmmel iz sijn <rhyme label="a" type="m">thuws</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Ynne' hijmmel iz sijn thuws’ Ja <rhyme label="a" type="m" corresp="#s4:l1">thuws</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Ja d'hijmmel iz sijn gruwn'leas <rhyme label="b" type="m">swiet</rhyme></l>
        <l id="s4:l4" met="2" type="+-">
          <rhyme label="c" type="m">d'Hijmmel-minn'</rhyme>
        </l>
        <l id="s4:l5" met="2" type="+-">Fet sijn <rhyme label="c" type="m" corresp="#s4:l4">sin</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Hert, siel, yn fest' <rhyme label="b" type="m" corresp="#s4:l3">geniet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Ontmet him 't gjealp' <rhyme label="a" type="m">Rea-mar</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Ontmet him djiep Rea-mar’ <rhyme label="a" type="m" corresp="#s5:l1">Rea-mar</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Ontmet him 't, bijld des deads, <rhyme label="b" type="m">Jordaen</rhyme>,</l>
        <l id="s5:l4" met="2" type="+-">'t Det nin <rhyme label="c" type="m">schea</rhyme>:</l>
        <l id="s5:l5" met="2" type="+-">Ho! schoe 't <rhyme label="c" type="m" corresp="#s5:l4">quea</rhyme>?</l>
        <l id="s5:l6" met="3" type="-+">Neen: 't wirt sijn <rhyme label="b" type="m" corresp="#s5:l3">hijmmel-baen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Doz reysget hy lanz <rhyme label="a" type="m">wey</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Doz reysget hy lanz wey’ Ja <rhyme label="a" type="m" corresp="#s6:l1">wey</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Uwt yerdsche' Egipt, trogg' torr' <rhyme label="b" type="m">woestijnn'</rhyme>,</l>
        <l id="s6:l4" met="2" type="+-">Fol <rhyme label="c" type="m">fortriet</rhyme>,</l>
        <l id="s6:l5" met="2" type="+-">Soet, <rhyme label="c" type="m" corresp="#s6:l4">on-swiet</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">'t Blier hijmmelsch' Can'an <rhyme label="b" type="m" corresp="#s6:l3">yn</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <author>Dirk Rafaelsz. Camphuysen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ACh! Godt, heb <rhyme label="a" type="f">medelijden</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">En laet de straff <rhyme label="a" type="f" corresp="#s1:l1">betijden</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Terwijlen u <rhyme label="b" type="m">’tgemoedt</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Door meer dan bil’cke <rhyme label="c" type="f">tooren</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Wt mijne sondt <rhyme label="c" type="f" corresp="#s1:l4">geboren</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">So heft’lijck is <rhyme label="b" type="m" corresp="#s1:l3">ontgloedt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Vergeeff, vergeeff <rhyme label="a" type="f">misdaden</rhyme>.</l>
        <l id="s2:l2" met="3" type="-+">Toon rijckheyt van <rhyme label="a" type="f" corresp="#s2:l1">genaden</rhyme>.</l>
        <l id="s2:l3" met="3" type="-+">Het lichaem, <rhyme label="b" type="m">afgepijnt</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Ontmerght, en t’enden <rhyme label="c" type="f">krachten</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Vereyscht een mildt <rhyme label="c" type="f" corresp="#s2:l4">versachten</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Eer’t teenemael <rhyme label="b" type="m" corresp="#s2:l3">verquijnt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Hert-schrick treft my <rhyme label="a" type="f">inwendich</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">’tGeweet maeckt my <rhyme label="a" type="f" corresp="#s3:l1">ellendigh</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Ter doot toe is my <rhyme label="b" type="m">bang</rhyme>:</l>
        <l id="s3:l4" met="3" type="-+">Ick smelt door diep <rhyme label="c" type="f">benouwen</rhyme></l>
        <l id="s3:l5" met="3" type="-+">En sidderigh <rhyme label="c" type="f" corresp="#s3:l4">vergrouwen</rhyme>.</l>
        <l id="s3:l6" met="3" type="-+">Hoe lang, ach Heer, hoe <rhyme label="b" type="m" corresp="#s3:l3">lang</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Hoe lang laet ghy my <rhyme label="a" type="f">quijnen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En, uur aen uur, <rhyme label="a" type="f" corresp="#s4:l1">verdwijnen</rhyme>?</l>
        <l id="s4:l3" met="3" type="-+">In een soo harden <rhyme label="b" type="m">noot</rhyme>?</l>
        <l id="s4:l4" met="3" type="-+">Ach wil te mywaerts <rhyme label="c" type="f">naken</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">En treck my uyt de <rhyme label="c" type="f" corresp="#s4:l4">kaken</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Van een gewisse <rhyme label="b" type="m" corresp="#s4:l3">doodt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Of acht ghy my, <rhyme label="a" type="f">rechtveerdigh</rhyme></l>
        <l id="s5:l2" met="3" type="-+">En strenge Godt, <rhyme label="a" type="f" corresp="#s5:l1">onwaerdigh</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Dat ghy my troost <rhyme label="b" type="m">bereyt</rhyme>:</l>
        <l id="s5:l4" met="3" type="-+">Soo doettet om de <rhyme label="c" type="f">goedtheydt</rhyme></l>
        <l id="s5:l5" met="3" type="-+">En ingeaerde <rhyme label="c" type="f" corresp="#s5:l4">soetheydt</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Van uwe <rhyme label="b" type="m" corresp="#s5:l3">Godlijckheydt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Eylaes! in doodes <rhyme label="a" type="f">nacht</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Is Weten noch <rhyme label="a" type="f" corresp="#s6:l1">Gedachte</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Is tale noch <rhyme label="b" type="m">verstant</rhyme>.</l>
        <l id="s6:l4" met="3" type="-+">Ach! wie sal uws <rhyme label="c" type="f">gedencken</rhyme></l>
        <l id="s6:l5" met="3" type="-+">En met loff-danck <rhyme label="c" type="f" corresp="#s6:l4">beschencken</rhyme></l>
        <l id="s6:l6" met="3" type="-+">In’t eeuwigh-duyster <rhyme label="b" type="m" corresp="#s6:l3">landt</rhyme>?</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Hoe moe ben ick van <rhyme label="a" type="f">stenen</rhyme>!</l>
        <l id="s7:l2" met="3" type="-+">Hoe nat door stadigh <rhyme label="a" type="f" corresp="#s7:l1">weenen</rhyme>!</l>
        <l id="s7:l3" met="3" type="-+">In tranen swemt mijn <rhyme label="b" type="m">bedt</rhyme>;</l>
        <l id="s7:l4" met="3" type="-+">De bloem der jeught is <rhyme label="c" type="f">henen</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">’tGestalt, door druck, <rhyme label="c" type="f" corresp="#s7:l4">verdwenen</rhyme>;</l>
        <l id="s7:l6" met="3" type="-+">Met angst leeff ick <rhyme label="b" type="m" corresp="#s7:l3">om-set</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Wech, Goddeloos <rhyme label="a" type="f">gebroedtsel</rhyme>.</l>
        <l id="s8:l2" met="3" type="-+">Daer koomt, daer koomt <rhyme label="a" type="f" corresp="#s8:l1">versoetsel</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Versoetsel van <rhyme label="b" type="m">ellendt</rhyme>.</l>
        <l id="s8:l4" met="3" type="-+">De Heer heeft tot mijn <rhyme label="c" type="f">reden</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Mijn tranen, mijn <rhyme label="c" type="f" corresp="#s8:l4">gebeden</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Sijn gunstigh oor <rhyme label="b" type="m" corresp="#s8:l3">ghewendt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Wech alle druck en <rhyme label="a" type="f">schromen</rhyme>.</l>
        <l id="s9:l2" met="3" type="-+">Ick sie den tijt vast <rhyme label="a" type="f" corresp="#s9:l1">komen</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Dat al ’tvyandigh <rhyme label="b" type="m">rot</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Met schrick en schaemt’ <rhyme label="c" type="f">omgeven</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Te rug zal zijn <rhyme label="c" type="f" corresp="#s9:l4">gedreven</rhyme>.</l>
        <l id="s9:l6" met="3" type="-+">Soo goedt en trou is <rhyme label="b" type="m" corresp="#s9:l3">Godt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

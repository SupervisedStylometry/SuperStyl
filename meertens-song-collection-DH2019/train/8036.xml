  <author>Jan Jansz. Deutel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">AL die daer zijn <rhyme label="a" type="f">beladen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Met hare sonden <rhyme label="b" type="m">swaer</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Door leet wesens <rhyme label="c" type="m">ghepijn</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Te gaen wordt haer <rhyme label="a" type="f" corresp="#s1:l1">geraden</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Tot Christum, want hy <rhyme label="b" type="m" corresp="#s1:l2">haer</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Roept, als goedt <rhyme label="c" type="m" corresp="#s1:l3">medecijn</rhyme>:</l>
        <l id="s1:l7" met="3" type="-+">Comt in mijn jock end' <rhyme label="c" type="m" corresp="#s1:l3">lijn</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">End' in mijn schoole <rhyme label="d" type="f">leeren</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Sachtmoet ende <rhyme label="e" type="m">ootmoet</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">So sal dan t' uwaert <rhyme label="d" type="f" corresp="#s1:l8">keeren</rhyme></l>
        <l id="s1:l11" met="3" type="+-">Der Sielen ruste <rhyme label="e" type="m" corresp="#s1:l9">soet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Neemt op 's Heeren <rhyme label="a" type="f">geboden</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">'T goedt jock door <rhyme label="b" type="m">onderscheyt</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Der kennissen, als <rhyme label="c" type="m">die</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Nu te recht zijt <rhyme label="a" type="f" corresp="#s2:l1">ontvloden</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">S'werelts <rhyme label="b" type="m" corresp="#s2:l2">onsuyverheydt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Der sonden <rhyme label="c" type="m" corresp="#s2:l3">slavernye</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Laet die geen <rhyme label="c" type="m" corresp="#s2:l3">heerschappye</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Meer over 't lichaem <rhyme label="d" type="f">drijven</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Verwinnet quaedt met 't <rhyme label="e" type="m">goet</rhyme>,</l>
        <l id="s2:l10" met="3" type="-+">Soo sal in u <rhyme label="d" type="f" corresp="#s2:l8">beklijven</rhyme>,</l>
        <l id="s2:l11" met="3" type="+-">Der zielen ruste <rhyme label="e" type="m" corresp="#s2:l9">soet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Niet en hebben sy <rhyme label="a" type="f">vrede</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Die daer woest ende <rhyme label="b" type="m">wilt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Godtloos leven <rhyme label="c" type="m">rebel</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Ghelijck de zee, sy <rhyme label="a" type="f" corresp="#s3:l1">mede</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Niet konnen zijn <rhyme label="b" type="m" corresp="#s3:l2">ghestilt</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Maer die Godt vreesen <rhyme label="c" type="m" corresp="#s3:l3">wel</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">End' houden zijn <rhyme label="c" type="m" corresp="#s3:l3">bevel</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Vrede komt haer <rhyme label="d" type="f">beneven</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Als eenen <rhyme label="e" type="m">watervloet</rhyme>,</l>
        <l id="s3:l10" met="3" type="-+">So dat haer wordt <rhyme label="d" type="f" corresp="#s3:l8">gegeven</rhyme>,</l>
        <l id="s3:l11" met="3" type="+-">Der zielen ruste <rhyme label="e" type="m" corresp="#s3:l9">soet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Als 't herte gantsch is <rhyme label="a" type="f">veyligh</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Van boosheydt in 't <rhyme label="b" type="m">gemeyn</rhyme>.</l>
        <l id="s4:l3" met="3" type="-+">En daer in is <rhyme label="c" type="m">geplant</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Godts woordt suyver end' <rhyme label="a" type="f" corresp="#s4:l1">heyligh</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Soo wordt dat herte <rhyme label="b" type="m" corresp="#s4:l2">reyn</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Iae gemoet end' <rhyme label="c" type="m" corresp="#s4:l3">verstant</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">door het gheloove <rhyme label="c" type="m" corresp="#s4:l3">want</rhyme></l>
        <l id="s4:l8" met="3" type="-+">die 't woordt oprecht <rhyme label="d" type="f">bewaren</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">Worden daer door <rhyme label="e" type="m">gevoet</rhyme>,</l>
        <l id="s4:l10" met="3" type="-+">Godts gheest sal in haer <rhyme label="d" type="f" corresp="#s4:l8">baren</rhyme></l>
        <l id="s4:l11" met="3" type="+-">der zielen ruste <rhyme label="e" type="m" corresp="#s4:l9">soet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Vwen lust zy, o <rhyme label="a" type="f">menschen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Aen den Heere <rhyme label="b" type="m">minjoot</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">die u dan gheven <rhyme label="c" type="m">sal</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Wat u herte mach <rhyme label="a" type="f" corresp="#s5:l1">wenschen</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">dus uwe wegen <rhyme label="b" type="m" corresp="#s5:l2">bloot</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Wilt hem bevelen <rhyme label="c" type="m" corresp="#s5:l3">al</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">End' sonder veel <rhyme label="c" type="m" corresp="#s5:l3">geschal</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Zijt stille ende <rhyme label="d" type="f">wachtet</rhyme></l>
        <l id="s5:l9" met="3" type="-+">Op hem wat dat ghy <rhyme label="e" type="m">doet</rhyme>,</l>
        <l id="s5:l10" met="3" type="-+">Op dat ghy soo <rhyme label="d" type="f" corresp="#s5:l8">betrachtet</rhyme></l>
        <l id="s5:l11" met="3" type="+-">der zielen ruste <rhyme label="e" type="m" corresp="#s5:l9">soet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Als door een Zuydigh <rhyme label="a" type="f">waeyen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Van dat nieuw' <rhyme label="b" type="m">Testament</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">'Therte scheurt ende <rhyme label="c" type="m">beeft</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Met een vyerigh door <rhyme label="a" type="f" corresp="#s6:l1">laeyen</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">S'Heeren gheest daer <rhyme label="b" type="m" corresp="#s6:l2">ontrent</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Gheerne zijn plaetse <rhyme label="c" type="m" corresp="#s6:l3">heeft</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">dan komt de Heer end' <rhyme label="c" type="m" corresp="#s6:l3">gheeft</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Een stille sachte <rhyme label="d" type="f">suyghen</rhyme>,</l>
        <l id="s6:l9" met="3" type="-+">Daer sietmen den geest <rhyme label="e" type="m">vroet</rhyme>,</l>
        <l id="s6:l10" met="3" type="-+">Met sijn vruchten <rhyme label="d" type="f" corresp="#s6:l8">betuygen</rhyme></l>
        <l id="s6:l11" met="3" type="+-">Der zielen ruste <rhyme label="e" type="m" corresp="#s6:l9">soet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Niet meer leeren <rhyme label="a" type="f">oorlogen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">En sal het volck nu <rhyme label="b" type="m">voort</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Maer vry en <rhyme label="c" type="m">onvervaert</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Sal een yegelijck <rhyme label="a" type="f" corresp="#s7:l1">moghen</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Woonen met goedt <rhyme label="b" type="m" corresp="#s7:l2">accoort</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Onder sijnen <rhyme label="c" type="m" corresp="#s7:l3">wijngaert</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">End' vijgheboom <rhyme label="c" type="m" corresp="#s7:l3">vermaert</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Die soecken mogen <rhyme label="d" type="f">vinden</rhyme></l>
        <l id="s7:l9" met="3" type="-+">Vrucht, en schaduw' <rhyme label="e" type="m">behoet</rhyme>,</l>
        <l id="s7:l10" met="3" type="-+">Onder Syons <rhyme label="d" type="f" corresp="#s7:l8">beminden</rhyme>,</l>
        <l id="s7:l11" met="3" type="+-">Der zielen ruste <rhyme label="e" type="m" corresp="#s7:l9">soet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Ghy dochteren <rhyme label="a" type="f">ydoone</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Van Ierusalem <rhyme label="b" type="m">siet</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Den Bruydegom die <rhyme label="c" type="m">seyt</rhyme>:</l>
        <l id="s8:l4" met="3" type="-+">En wecket niet mijn <rhyme label="a" type="f" corresp="#s8:l1">schoone</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Bruydt, noch en roertse <rhyme label="b" type="m" corresp="#s8:l2">niet</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Die in mijn armen <rhyme label="c" type="m" corresp="#s8:l3">leyt</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">En inde roosen <rhyme label="c" type="m" corresp="#s8:l3">weyt</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Gheduerende de <rhyme label="d" type="f">quale</rhyme></l>
        <l id="s8:l9" met="3" type="-+">Van tribulacy <rhyme label="e" type="m">gloet</rhyme>,</l>
        <l id="s8:l10" met="3" type="-+">Op datse niet en <rhyme label="d" type="f" corresp="#s8:l8">fale</rhyme></l>
        <l id="s8:l11" met="3" type="+-">Der zielen ruste <rhyme label="e" type="m" corresp="#s8:l9">soet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Hagel werdt in den <rhyme label="a" type="f">woude</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Soo spreeckt de Heere, <rhyme label="b" type="m">maer</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Mijn volck sal woonen <rhyme label="c" type="m">vry</rhyme></l>
        <l id="s9:l4" met="3" type="-+">In des vreeds huysen <rhyme label="a" type="f" corresp="#s9:l1">boude</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">In stoute rust, al <rhyme label="b" type="m" corresp="#s9:l2">waer</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Eeuwighe stilte <rhyme label="c" type="m" corresp="#s9:l3">zy</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Onse vrede is <rhyme label="c" type="m" corresp="#s9:l3">hy</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Die vrede heeft <rhyme label="d" type="f">verkregen</rhyme>,</l>
        <l id="s9:l9" met="3" type="-+">Aen 't kruyce met sijn <rhyme label="e" type="m">bloedt</rhyme>,</l>
        <l id="s9:l10" met="3" type="-+">In hem is gantsch <rhyme label="d" type="f" corresp="#s9:l8">gelegen</rhyme></l>
        <l id="s9:l11" met="3" type="+-">Der zielen ruste <rhyme label="e" type="m" corresp="#s9:l9">soet</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Eenen gheest stil end' <rhyme label="a" type="f">sachtigh</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Daer med' moet zijn <rhyme label="b" type="m">verciert</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Nae 'sHeeren wil end' <rhyme label="c" type="m">lust</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">De mensche, die <rhyme label="a" type="f" corresp="#s10:l1">eendrachtigh</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Onsienelijck <rhyme label="b" type="m" corresp="#s10:l2">logiert</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">In 't herte wel <rhyme label="c" type="m" corresp="#s10:l3">gherust</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Daer gerechtigheyt <rhyme label="c" type="m" corresp="#s10:l3">kust</rhyme></l>
        <l id="s10:l8" met="3" type="-+">Den vrede, en daer <rhyme label="d" type="f">trouwe</rhyme></l>
        <l id="s10:l9" met="3" type="-+">Goedtheyt komt te <rhyme label="e" type="m">ghemoet</rhyme>,</l>
        <l id="s10:l10" met="3" type="-+">Daer spruyt in die <rhyme label="d" type="f" corresp="#s10:l8">landouwe</rhyme></l>
        <l id="s10:l11" met="3" type="+-">Der zielen ruste <rhyme label="e" type="m" corresp="#s10:l9">soet</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Noch een ruste <rhyme label="a" type="f">bequame</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Is voor Godts volck <rhyme label="b" type="m">present</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Beter als in <rhyme label="c" type="m">Canaan</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Maer in des Heeren <rhyme label="a" type="f" corresp="#s11:l1">name</rhyme></l>
        <l id="s11:l5" met="3" type="-+">Soo wie hem recht <rhyme label="b" type="m" corresp="#s11:l2">bekent</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Sonder wijcken daer <rhyme label="c" type="m" corresp="#s11:l3">van</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">Sijn hope worden <rhyme label="c" type="m" corresp="#s11:l3">kan</rhyme></l>
        <l id="s11:l8" met="3" type="-+">Levendigh ende <rhyme label="d" type="f">krachtigh</rhyme></l>
        <l id="s11:l9" met="3" type="-+">Met 'sHeeren vrede <rhyme label="e" type="m">goet</rhyme>,</l>
        <l id="s11:l10" met="3" type="-+">Namaels te zijn <rhyme label="d" type="f" corresp="#s11:l8">deelachtigh</rhyme></l>
        <l id="s11:l11" met="3" type="+-">Der sielen ruste <rhyme label="e" type="m" corresp="#s11:l9">soet</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">'Tis recht, by onsen <rhyme label="a" type="f">Prince</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Druck te verghelden <rhyme label="b" type="m">fel</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">die u bedroeven <rhyme label="c" type="m">saen</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Hier in swerelts <rhyme label="a" type="f" corresp="#s12:l1">province</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">Maer ghy die lijdt <rhyme label="b" type="m" corresp="#s12:l2">ghequel</rhyme></l>
        <l id="s12:l6" met="3" type="-+">Hoort Paulus soet <rhyme label="c" type="m" corresp="#s12:l3">vermaen</rhyme>,</l>
        <l id="s12:l7" met="3" type="-+">Ghy sult (seyt hy) <rhyme label="c" type="m" corresp="#s12:l3">ontfaen</rhyme>,</l>
        <l id="s12:l8" met="3" type="-+">Met ons ruste <rhyme label="d" type="f">gepresen</rhyme></l>
        <l id="s12:l9" met="3" type="-+">In Godts rijcke met <rhyme label="e" type="m">spoet</rhyme>,</l>
        <l id="s12:l10" met="3" type="-+">dits in volkomen <rhyme label="d" type="f" corresp="#s12:l8">wesen</rhyme></l>
        <l id="s12:l11" met="3" type="+-">der zielen ruste <rhyme label="e" type="m" corresp="#s12:l9">soet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

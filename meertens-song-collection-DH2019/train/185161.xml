    <tags/>
    <melody>Tien geboden</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Heft op u hert, opent u <rhyme label="a" type="f">ooren</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Ghy aertsche menschen die daer <rhyme label="b" type="m">meent</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Dat u de goed’ren <rhyme label="a" type="f" corresp="#s1:l1">toebehooren</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Die u maer zijn van Godt <rhyme label="b" type="m" corresp="#s1:l2">geleent</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Gebruycktse wel na syn <rhyme label="a" type="f">behaghen</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Aelmoessen geeft, soo hy <rhyme label="b" type="m">gebiet</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Vervult den noot van die u <rhyme label="a" type="f" corresp="#s2:l1">klaghen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Ontreckt u dynen vleesche <rhyme label="b" type="m" corresp="#s2:l2">niet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">&lt;aeckt vrienden nu in dese <rhyme label="a" type="f">tijden</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Van ‘t geen hier t’onrecht rijcdom <rhyme label="b" type="m">hiet</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Op dat ghy namaels meugt <rhyme label="a" type="f" corresp="#s3:l1">verblyden</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">In het waerachtige <rhyme label="b" type="m" corresp="#s3:l2">geniet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Vergadert u een schat hier <rhyme label="a" type="f">boven</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Die van geen roest verdorven <rhyme label="b" type="m">wert</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Noch die de dieven niet en <rhyme label="a" type="f" corresp="#s4:l1">roven</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Sent daer de liefde van u <rhyme label="b" type="m" corresp="#s4:l2">hert</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Vyt pure liefd’ wilt u <rhyme label="a" type="f">erbarmen</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Laet niemant ledich van u <rhyme label="b" type="m">gaen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Al sout ghy selfs daer deur <rhyme label="a" type="f" corresp="#s5:l1">verarmen</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Want Christus heeft alsoo <rhyme label="b" type="m" corresp="#s5:l2">gedaen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Neemt gheen uytstel, seght niet comt <rhyme label="a" type="f">morgen</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">So ghy ‘t doch heden wel <rhyme label="b" type="m">vermeucht</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">God sal u wederom <rhyme label="a" type="f" corresp="#s6:l1">versorghen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Wanneer ghy u tot bidden <rhyme label="b" type="m" corresp="#s6:l2">veucht</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Al zijt ghy weynich van <rhyme label="a" type="f">vermogen</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Ontsluyt u hert en geeft <rhyme label="b" type="m">ghetrou</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Want groot gheacht syn in Gods <rhyme label="a" type="f" corresp="#s7:l1">ooghen</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">De mijtjes van die <rhyme label="b" type="m" corresp="#s7:l2">wedu-vrou</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Niet spaerlick wilt u weldaedt <rhyme label="a" type="f">zaeyen</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Want soo ghy rijckelick <rhyme label="b" type="m">uytlanght</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Soo sult ghy overvloedich <rhyme label="a" type="f" corresp="#s8:l1">maeyen</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Een volle mate ghy <rhyme label="b" type="m" corresp="#s8:l2">ontfanght</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Wilt van vergeldingh u <rhyme label="a" type="f">onthouden</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Leent daer ghy niet en hoopt <rhyme label="b" type="m">t’ontfaen</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Het sal u weder syn <rhyme label="a" type="f" corresp="#s9:l1">vergouden</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Als de rechtveerdighe <rhyme label="b" type="m" corresp="#s9:l2">opstaen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Roem-gierich laet het niemant <rhyme label="a" type="f">weten</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Want of het heymelick <rhyme label="b" type="m">gheschiet</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">V Vader sal het niet <rhyme label="a" type="f" corresp="#s10:l1">vergeten</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Die ‘t alles in ‘t verborghen <rhyme label="b" type="m" corresp="#s10:l2">siet</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Vriend’lick en willich wilt u <rhyme label="a" type="f">toonen</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Om goet te doen hebt geen <rhyme label="b" type="m">verdriet</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Godt salt u soo ghewillich <rhyme label="a" type="f" corresp="#s11:l1">loonen</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Als de vergeldinghe <rhyme label="b" type="m" corresp="#s11:l2">gheschiet</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Voornamelick sult ghy de <rhyme label="a" type="f">vromen</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Gheloovich zijnd’ in Christi <rhyme label="b" type="m">naem</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">In haren noot te hulpe <rhyme label="a" type="f" corresp="#s12:l1">comen</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Als ledekens van zijn <rhyme label="b" type="m" corresp="#s12:l2">lichaem</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Oock niet te min vroegh ende <rhyme label="a" type="f">spade</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Aen allen menschen bystant <rhyme label="b" type="m">doet</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Want Godt heeft beyde goed en <rhyme label="a" type="f" corresp="#s13:l1">quade</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Sijn vriendelicke gaven <rhyme label="b" type="m" corresp="#s13:l2">soet</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Want also moet ghy u <rhyme label="a" type="f">bewijsen</rhyme></l>
        <l id="s14:l2" met="4" type="-+">Als kind’ren Godts, op dat <rhyme label="b" type="m">mitsdien</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Vwen Hemelschen Vader <rhyme label="a" type="f" corresp="#s14:l1">prijsen</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">Die uwe goede wercken <rhyme label="b" type="m" corresp="#s14:l2">sien</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Aelmis uyt liefde aen den <rhyme label="a" type="f">armen</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">Den mensche van sonden <rhyme label="b" type="m">gheneest</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">Want Godt sal haer weder <rhyme label="a" type="f" corresp="#s15:l1">ontfarmen</rhyme>,</l>
        <l id="s15:l4" met="4" type="-+">Die hier bermhertich zijn <rhyme label="b" type="m" corresp="#s15:l2">gheweest</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Tijd’lick en eeuwich sy <rhyme label="a" type="f">bevinden</rhyme>,</l>
        <l id="s16:l2" met="4" type="-+">Godts liefde met een groote <rhyme label="b" type="m">vreucht</rhyme>,</l>
        <l id="s16:l3" met="4" type="-+">Die haer des armen <rhyme label="a" type="f" corresp="#s16:l1">onderwinden</rhyme>,</l>
        <l id="s16:l4" met="4" type="-+">Want ongeloont en bleef noyt <rhyme label="b" type="m" corresp="#s16:l2">deucht</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Ghelijckerwijs oock daer en <rhyme label="a" type="f">tegen</rhyme>,</l>
        <l id="s17:l2" met="4" type="-+">Een strengh oordeel sullen <rhyme label="b" type="m">ontfaen</rhyme>,</l>
        <l id="s17:l3" met="4" type="-+">Die geen barmherticheyt en <rhyme label="a" type="f" corresp="#s17:l1">pleghen</rhyme>,</l>
        <l id="s17:l4" met="4" type="-+">Int eeuwich vier sullen sy <rhyme label="b" type="m" corresp="#s17:l2">gaen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

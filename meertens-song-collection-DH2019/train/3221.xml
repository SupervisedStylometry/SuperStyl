  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">DIe in smerte <rhyme label="a" type="m">quijnt</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">En door enckel leet <rhyme label="a" type="m" corresp="#s1:l1">verdwijnt</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Hebt ghy een gherust <rhyme label="b" type="m">ghemoedt</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Soo hebje 't alderbeste <rhyme label="b" type="m" corresp="#s1:l3">goedt</rhyme>:</l>
        <l id="s1:l5" met="2" type="-+">'t Stille <rhyme label="c" type="m">hert</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Acht geen pijn, noch vreest geen <rhyme label="c" type="m" corresp="#s1:l5">smert</rhyme>,</l>
        <l id="s1:l7" met="3" type="+-">Noch geen werelts <rhyme label="d" type="m">leet</rhyme>,</l>
        <l id="s1:l8" met="2" type="-+">Hoe groot hoe <rhyme label="d" type="m" corresp="#s1:l7">wreedt</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Alst door Godt suyver <rhyme label="c" type="m" corresp="#s1:l5">werdt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Godt, hoewel hy <rhyme label="a" type="m">slaet</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Die en is niet fel noch <rhyme label="a" type="m" corresp="#s2:l1">quaet</rhyme>:</l>
        <l id="s2:l3" met="4" type="+-">Het is maer uyt <rhyme label="b" type="m">vriend'lijckheydt</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Dat hy ons anghst en rouw <rhyme label="b" type="m" corresp="#s2:l3">bereydt</rhyme>:</l>
        <l id="s2:l5" met="2" type="-+">Koorts die <rhyme label="c" type="m">dwinght</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">De sieckte prickelt en se <rhyme label="c" type="m" corresp="#s2:l5">dringht</rhyme>,</l>
        <l id="s2:l7" met="3" type="+-">Godes goede <rhyme label="d" type="m">handt</rhyme></l>
        <l id="s2:l8" met="2" type="-+">Doet <rhyme label="d" type="m" corresp="#s2:l7">onderstandt</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Die troost en voordeel <rhyme label="c" type="m" corresp="#s2:l5">bringht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Klaeght staegh tot den <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Als oock David dee wel <rhyme label="a" type="m" corresp="#s3:l1">eer</rhyme>:</l>
        <l id="s3:l3" met="4" type="+-">Godt verlicht de sieckte <rhyme label="b" type="m">wel</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">En oock het innigh <rhyme label="b" type="m" corresp="#s3:l3">harts-ghequel</rhyme>;</l>
        <l id="s3:l5" met="2" type="-+">Doet hy 't <rhyme label="c" type="m">niet</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Maer dat hy noch met droefheydt <rhyme label="c" type="m" corresp="#s3:l5">giet</rhyme>,</l>
        <l id="s3:l7" met="3" type="+-">'t Is 'et wijs <rhyme label="d" type="m">begheer</rhyme></l>
        <l id="s3:l8" met="2" type="-+">Van Godt de <rhyme label="d" type="m" corresp="#s3:l7">Heer</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Hy weet waer 't toe <rhyme label="c" type="m" corresp="#s3:l5">gheschiedt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">Houdt gheduerigh <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Met ghebeden en <rhyme label="a" type="m" corresp="#s4:l1">ghetraen</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Maeckt hem uwe wil <rhyme label="b" type="m">bekent</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Hy sal wel maecken dat 'et <rhyme label="b" type="m" corresp="#s4:l3">endt</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Tot u <rhyme label="c" type="m">lust</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Tot saligheydt en ware <rhyme label="c" type="m" corresp="#s4:l5">rust</rhyme>;</l>
        <l id="s4:l7" met="3" type="+-">Vaeck wel door de <rhyme label="d" type="m">Doodt</rhyme>,</l>
        <l id="s4:l8" met="2" type="-+">Het is gheen <rhyme label="d" type="m" corresp="#s4:l7">noodt</rhyme></l>
        <l id="s4:l9" met="3" type="-+">Als ramp maer is <rhyme label="c" type="m" corresp="#s4:l5">gheblust</rhyme>.</l>
      </lg>
    </lg>
  </text>

    <tags/>
    <melody>Hoe kan ik vrolijk wezen</melody>
  <author>Jan van Hoogstraten</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Nu zing, op blijde <rhyme label="a" type="f">wijzen</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">Zing, mijn ziel den <rhyme label="b" type="m">Heer</rhyme>!</l>
        <l id="s1:l3" met="3" type="+-">Wilt zijn goedheyt <rhyme label="a" type="f" corresp="#s1:l1">prijzen</rhyme></l>
        <l id="s1:l4" met="3" type="+-">Zijnen naam ter <rhyme label="b" type="m" corresp="#s1:l2">eer'</rhyme>!</l>
        <l id="s1:l5" met="4" type="-+">Juich, ô mijn ziel! noit kwelens <rhyme label="c" type="m">moe</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Zoo lang gy 't ligt ziet <rhyme label="d" type="f">rijzen</rhyme>,</l>
        <l id="s1:l7" met="3" type="+-">Hem uw vaarzen <rhyme label="c" type="m" corresp="#s1:l5">toe</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">De kleingebroken <rhyme label="a" type="f">harten</rhyme></l>
        <l id="s2:l2" met="3" type="+-">Heeld hy, hoe <rhyme label="b" type="m">gewond</rhyme>.</l>
        <l id="s2:l3" met="3" type="+-">Hy geneest mijn <rhyme label="a" type="f" corresp="#s2:l1">smarten</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">En maakt my <rhyme label="b" type="m" corresp="#s2:l2">gezond</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">Wat schrik, of vrees my klamp aan <rhyme label="c" type="m">boort</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Ik durf alle onheil <rhyme label="d" type="f">tarten</rhyme></l>
        <l id="s2:l7" met="3" type="+-">Als ge, ô God! my <rhyme label="c" type="m" corresp="#s2:l5">hoort</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">God laat hun noit in <rhyme label="a" type="f">lijden</rhyme></l>
        <l id="s3:l2" met="3" type="+-">Die (hoe hier <rhyme label="b" type="m">veragt</rhyme>)</l>
        <l id="s3:l3" met="3" type="+-">Zig in hem <rhyme label="a" type="f" corresp="#s3:l1">verblijden</rhyme>:</l>
        <l id="s3:l4" met="3" type="+-">Trots hun haters <rhyme label="b" type="m" corresp="#s3:l2">magt</rhyme>.</l>
        <l id="s3:l5" met="4" type="-+">Maar hoort hun klagten in den <rhyme label="c" type="m">nood</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En schenkt, in diere <rhyme label="d" type="f">tijden</rhyme>,</l>
        <l id="s3:l7" met="3" type="+-">Hun gezegend <rhyme label="c" type="m" corresp="#s3:l5">brood</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">'T is God, die blinden de <rhyme label="a" type="f">oogen</rhyme></l>
        <l id="s4:l2" met="3" type="+-">Opent, en <rhyme label="b" type="m">verligt</rhyme>:</l>
        <l id="s4:l3" met="3" type="+-">Welkers <rhyme label="a" type="f" corresp="#s4:l1">alvermogen</rhyme></l>
        <l id="s4:l4" met="3" type="+-">De verslaag'nen <rhyme label="b" type="m" corresp="#s4:l2">rigt</rhyme>.</l>
        <l id="s4:l5" met="4" type="-+">Het ligt der starren zon, en <rhyme label="c" type="m">maan</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Ziet nedrig en <rhyme label="d" type="f">gebogen</rhyme></l>
        <l id="s4:l7" met="3" type="+-">Zijne grootheyt <rhyme label="c" type="m" corresp="#s4:l5">aan</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">'T is God, die weer, en <rhyme label="a" type="f">winden</rhyme></l>
        <l id="s5:l2" met="3" type="+-">Boeit door zijne <rhyme label="b" type="m">stem</rhyme>.</l>
        <l id="s5:l3" met="3" type="+-">Die haar kan <rhyme label="a" type="f" corresp="#s5:l1">ontbinden</rhyme>.</l>
        <l id="s5:l4" met="3" type="+-">Alles hoort na <rhyme label="b" type="m" corresp="#s5:l2">hem</rhyme>.</l>
        <l id="s5:l5" met="4" type="-+">'T is God alleen, die 't alles <rhyme label="c" type="m">geeft</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Wat hier op aard te <rhyme label="d" type="f">vinden</rhyme></l>
        <l id="s5:l7" met="3" type="+-">Is, of leven <rhyme label="c" type="m" corresp="#s5:l5">heeft</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">'T zingt alles hem ter <rhyme label="a" type="f">eeren</rhyme></l>
        <l id="s6:l2" met="3" type="+-">Wat op harp, of <rhyme label="b" type="m">luyt</rhyme></l>
        <l id="s6:l3" met="3" type="+-">Groet den heer der <rhyme label="a" type="f" corresp="#s6:l1">Heeren</rhyme></l>
        <l id="s6:l4" met="3" type="+-">Daar al 't goede uit <rhyme label="b" type="m" corresp="#s6:l2">spruyt</rhyme>.</l>
        <l id="s6:l5" met="4" type="-+">Zing des, mijn ziel! noit kwelens <rhyme label="c" type="m">moe</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Wat leed u dreyg te <rhyme label="d" type="f">deeren</rhyme>,</l>
        <l id="s6:l7" met="3" type="+-">Gode uw vaarzen <rhyme label="c" type="m" corresp="#s6:l5">toe</rhyme>!</l>
      </lg>
    </lg>
  </text>

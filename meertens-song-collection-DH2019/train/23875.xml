<song>
  <meta>
    <id>23875</id>
    <date>
      <year-start>1592</year-start>
      <year-end>1592</year-end>
    </date>
    <tags>
      <tag standard-name="loflied" translation="praise song">loflied</tag>
      <tag standard-name="kerstlied" translation="Christmas song">kerstlied</tag>
      <tag standard-name="schriftuurlijk lied" translation="scripture song">schriftuurlijk lied</tag>
    </tags>
    <melody>Dies est laetitiae in ortu regali</melody>
    <categories>
      <category translation="seasons and annual events">jaarkring</category>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">VErblijdt u al, ghy Christen <rhyme label="a" type="m">schaer</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">En wilt nu vrolijck <rhyme label="b" type="f">singen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Prijst Godt onsen, Hemelschen <rhyme label="a" type="m" corresp="#s1:l1">Vaer</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En wilt hem loff, <rhyme label="b" type="f" corresp="#s1:l2">toebringen</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Want hy door sijn, <rhyme label="c" type="m">bermherticheit</rhyme>:</l>
        <l id="s1:l6" met="4" type="-+">De Mesias, die was <rhyme label="c" type="m" corresp="#s1:l5">voorseijt</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Ons goedich heeft <rhyme label="d" type="f">gegeuen</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">Christus de Heer, in <rhyme label="e" type="m">Jsrael</rhyme>:</l>
        <l id="s1:l9" met="4" type="-+">Onsen heylant, <rhyme label="e" type="m" corresp="#s1:l8">Emanuel</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">Des wilt in vreuchden <rhyme label="d" type="f" corresp="#s1:l7">leuen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Siet een vreucht der <rhyme label="a" type="m">gerechtigheit</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Heerlick, hooch <rhyme label="b" type="f">ghepresen</rhyme></l>
        <l id="s2:l3" met="4" type="-+">De Steer in Jacop <rhyme label="a" type="m" corresp="#s2:l1">toegeseyt</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Js claer <rhyme label="b" type="f" corresp="#s2:l2">opgeresen</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">De Leuu van Juda, groot van <rhyme label="c" type="m">Cracht</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Een stercke belt, veruult met <rhyme label="c" type="m" corresp="#s2:l5">macht</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Het zaet, seer hooch van <rhyme label="d" type="f">werden</rhyme>:</l>
        <l id="s2:l8" met="4" type="-+">Waer door wy worden, breedt en <rhyme label="e" type="m">wijt</rhyme>,</l>
        <l id="s2:l9" met="4" type="-+">Salich en <rhyme label="e" type="m" corresp="#s2:l8">ghebenedijt</rhyme>:</l>
        <l id="s2:l10" met="3" type="-+">Js gecomen op <rhyme label="d" type="f" corresp="#s2:l7">erden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Des weest niet stil, O <rhyme label="a" type="m">Christenheyt</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Maer dancket Godt van <rhyme label="b" type="f">bouen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">U hert en zielle, sy <rhyme label="a" type="m" corresp="#s3:l1">bereijt</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Stadich Godt te <rhyme label="b" type="f" corresp="#s3:l2">louen</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Want ons een Kindeken, is <rhyme label="c" type="m">geboren</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Dat ons verlooft, van godes <rhyme label="c" type="m" corresp="#s3:l5">tooren</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">En brengt ons, tot <rhyme label="d" type="f">genaden</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">Des singet al, van herten <rhyme label="e" type="m">blij</rhyme>:</l>
        <l id="s3:l9" met="4" type="-+">Halleluja, Ghelooft Godt <rhyme label="e" type="m" corresp="#s3:l8">sy</rhyme></l>
        <l id="s3:l10" met="3" type="-+">Uan alle zijn <rhyme label="d" type="f" corresp="#s3:l7">weldaden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Dit Kindeken, Genade <rhyme label="a" type="m">rijck</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Js Godes Soon <rhyme label="b" type="f">ghepresen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Uan eender Maget, <rhyme label="a" type="m" corresp="#s4:l1">suyuerlijck</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Geboren so wy <rhyme label="b" type="f" corresp="#s4:l2">lessen</rhyme>:</l>
        <l id="s4:l5" met="4" type="-+">Te Bethlehem, Jnt Jodtsche <rhyme label="c" type="m">landt</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Genamt Jesus, onsen <rhyme label="c" type="m" corresp="#s4:l5">heylandt</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Een Kindeken seer <rhyme label="d" type="f">reene</rhyme>,</l>
        <l id="s4:l8" met="4" type="-+">Waer ons dit Kindeken, niet <rhyme label="e" type="m">geboren</rhyme>,</l>
        <l id="s4:l9" met="4" type="-+">Wy bleuen altemael <rhyme label="e" type="m" corresp="#s4:l8">verlooren</rhyme>,</l>
        <l id="s4:l10" met="3" type="-+">Het brengt ons wt <rhyme label="d" type="f" corresp="#s4:l7">ghemeene</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Des looft den Heer, ghy Christenen <rhyme label="a" type="m">al</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Uan sijn groote <rhyme label="b" type="f">weldaden</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Die tot ons in, dit aertsche <rhyme label="a" type="m" corresp="#s5:l1">dal</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Om ons van Sondt, <rhyme label="b" type="f" corresp="#s5:l2">tontladen</rhyme>:</l>
        <l id="s5:l5" met="4" type="-+">Uan bouen wt, des Hemels <rhyme label="c" type="m">troon</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Gesonden heeft, sijn lieuen <rhyme label="c" type="m" corresp="#s5:l5">Soon</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Wilt hem hertlijck <rhyme label="d" type="f">prijsen</rhyme></l>
        <l id="s5:l8" met="4" type="-+">Singt loff en danck, minst ende <rhyme label="e" type="m">meest</rhyme>,</l>
        <l id="s5:l9" met="4" type="-+">Godt Uader, Soon, en heylige <rhyme label="e" type="m" corresp="#s5:l8">Geest</rhyme>,</l>
        <l id="s5:l10" met="3" type="-+">Wilt Godt eer <rhyme label="d" type="f" corresp="#s5:l7">bewijsen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Wy dancken dy, Godt Uader <rhyme label="a" type="m">rijck</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">U louen wy van <rhyme label="b" type="f">herten</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Wy prijsen dy, alle <rhyme label="a" type="m" corresp="#s6:l1">ghelijck</rhyme>.</l>
        <l id="s6:l4" met="3" type="-+">Ghy helpet ons wt| <rhyme label="b" type="f" corresp="#s6:l2">smerten</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">O Godes Soon, u dancken <rhyme label="c" type="m">wy</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Ghy die ons maeckt, van sonden <rhyme label="c" type="m" corresp="#s6:l5">vrij</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">En brengt ons tot <rhyme label="d" type="f">Genaden</rhyme>,</l>
        <l id="s6:l8" met="4" type="-+">O heylige <rhyme label="e" type="m">dryeenicheit</rhyme>,</l>
        <l id="s6:l9" met="4" type="-+">Weest gelooft inder <rhyme label="e" type="m" corresp="#s6:l8">eeuwicheit</rhyme>,</l>
        <l id="s6:l10" met="3" type="-+">Uan alle weldaet <rhyme label="d" type="f" corresp="#s6:l7">Amen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

    <melody>Potafar die zou gaan trouwen</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Jesu hoort myn <rhyme label="a" type="f">suchten</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Myn hert komt tot u <rhyme label="a" type="f" corresp="#s1:l1">vluchten</rhyme>;</l>
        <l id="s1:l3" met="3" type="-+">Voor u wilt t'alles <rhyme label="b" type="f">derven</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En leven, ende <rhyme label="b" type="f" corresp="#s1:l3">sterven</rhyme>:</l>
        <l id="s1:l5" met="3" type="-+">De schepsels <rhyme label="c" type="m">bann'-ick-uyt</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Myn hert hun <rhyme label="c" type="m" corresp="#s1:l5">buyten-sluyt</rhyme>:</l>
        <l id="s1:l7" met="3" type="-+">t'Syn al te slechte <rhyme label="d" type="f">panden</rhyme></l>
        <l id="s1:l8" met="4" type="+-">Voor myn ziele, die eens <rhyme label="e" type="m">moet</rhyme></l>
        <l id="s1:l9" met="3" type="-+">In uwe liefde <rhyme label="d" type="f" corresp="#s1:l7">branden</rhyme>,</l>
        <l id="s1:l10" met="4" type="+-">En aenschouwen t'hooghste <rhyme label="e" type="m" corresp="#s1:l8">goedt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Op dat ick sou <rhyme label="a" type="f">beminnen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Dringht gy in myne <rhyme label="a" type="f" corresp="#s2:l1">sinnen</rhyme>:</l>
        <l id="s2:l3" met="3" type="-+">Te slecht syn ander <rhyme label="b" type="f">saeken</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Om liefde te doen <rhyme label="b" type="f" corresp="#s2:l3">smaeken</rhyme>;</l>
        <l id="s2:l5" met="3" type="-+">Nochtans <rhyme label="c" type="m">d'hooveerdigheydt</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Treckt my naer <rhyme label="c" type="m" corresp="#s2:l5">d'ydelheydt</rhyme>:</l>
        <l id="s2:l7" met="3" type="-+">Doch ick en moet maer <rhyme label="d" type="f">leeren</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Dat ick van het stof <rhyme label="e" type="m">kom-af</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">En dat ick haest sal <rhyme label="d" type="f" corresp="#s2:l7">keeren</rhyme></l>
        <l id="s2:l10" met="4" type="+-">Naer het stof in t'duyster <rhyme label="e" type="m" corresp="#s2:l8">graf</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Moet mynen Niet my <rhyme label="a" type="f">schaemen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Gy komt tot hope <rhyme label="a" type="f" corresp="#s3:l1">praemen</rhyme>;</l>
        <l id="s3:l3" met="3" type="-+">Onweerd' u te <rhyme label="b" type="f">behaegen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Komt gy my liefde <rhyme label="b" type="f" corresp="#s3:l3">draegen</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Uw liefd' en vindt geen <rhyme label="c" type="m">maet</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Die aen haer <rhyme label="c" type="m" corresp="#s3:l5">tegen-staet</rhyme>:</l>
        <l id="s3:l7" met="3" type="-+">Sy deed' op d'aerd' u <rhyme label="d" type="f">leven</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Sy heeft u een mensch <rhyme label="e" type="m">gemaekt</rhyme>;</l>
        <l id="s3:l9" met="3" type="-+">Als Goden ons <rhyme label="d" type="f" corresp="#s3:l7">verheven</rhyme>:</l>
        <l id="s3:l10" met="4" type="+-">Tot wat wonder sy <rhyme label="e" type="m" corresp="#s3:l8">geraekt</rhyme>!</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Laet my dees liefd' <rhyme label="a" type="f">ontsteken</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Laet haer myn herte <rhyme label="a" type="f" corresp="#s4:l1">breken</rhyme>:</l>
        <l id="s4:l3" met="3" type="-+">Veel liever wil ick <rhyme label="b" type="f">sterven</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Als uwe liefde <rhyme label="b" type="f" corresp="#s4:l3">derven</rhyme>;</l>
        <l id="s4:l5" met="3" type="-+">Al ander <rhyme label="c" type="m">minne-brandt</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Sal brengen eeuwigh' <rhyme label="c" type="m" corresp="#s4:l5">schand'</rhyme>.</l>
        <l id="s4:l7" met="3" type="-+">Kan ick eens heel myn <rhyme label="d" type="f">leven</rhyme></l>
        <l id="s4:l8" met="4" type="+-">Wesen uwe liefde <rhyme label="e" type="m">quyt</rhyme>?</l>
        <l id="s4:l9" met="3" type="-+">U moet ick alles <rhyme label="d" type="f" corresp="#s4:l7">geven</rhyme>,</l>
        <l id="s4:l10" met="4" type="+-">Gy alleen myne liefde <rhyme label="e" type="m" corresp="#s4:l8">syt</rhyme>.</l>
      </lg>
    </lg>
  </text>

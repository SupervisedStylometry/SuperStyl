  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">EY siet hoe Phillis, met <rhyme label="a" type="f">Amarillis</rhyme>,</l>
        <l id="s1:l2" met="5" type="+-">Nu inde meye, langst de groene <rhyme label="b" type="f">heye</rhyme></l>
        <l id="s1:l3" met="3" type="+-">Langst de groene <rhyme label="c" type="m">paen</rhyme>,</l>
        <l id="s1:l4" met="5" type="+-">Ey siet doch, siet doch, hoe sy samen <rhyme label="c" type="m" corresp="#s1:l3">gaen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Siet Phillis kussen, zijn liefde <rhyme label="a" type="f">blusten</rhyme>,</l>
        <l id="s2:l2" met="5" type="+-">Veel minne strelen, gaet hy haer daer <rhyme label="b" type="f">deelen</rhyme></l>
        <l id="s2:l3" met="3" type="+-">Doch in <rhyme label="c" type="m">eerbaerheydt</rhyme>,</l>
        <l id="s2:l4" met="5" type="+-">Ey siet doch, siet doch, hoe dat Phillis <rhyme label="c" type="m" corresp="#s2:l3">vleydt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Amaril teere, die weyghert <rhyme label="a" type="f">seere</rhyme>,</l>
        <l id="s3:l2" met="5" type="+-">Doch siet van binnen, gaet sy hem <rhyme label="b" type="f">beminnen</rhyme>,</l>
        <l id="s3:l3" met="3" type="+-">Soo de daet <rhyme label="c" type="m">ghetuyght</rhyme>,</l>
        <l id="s3:l4" met="5" type="+-">Ey siet doch, siet doch, hoe hem Phillis <rhyme label="c" type="m" corresp="#s3:l3">buyght</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Sijn soete woorden, zijn minnen <rhyme label="a" type="f">koorden</rhyme>,</l>
        <l id="s4:l2" met="5" type="+-">Die sonder gecken, seer geweldig <rhyme label="b" type="f">trecken</rhyme>,</l>
        <l id="s4:l3" met="3" type="+-">Amarillis <rhyme label="c" type="m">aert</rhyme>,</l>
        <l id="s4:l4" met="5" type="+-">Ey siet doch, siet doch, wat de Minne <rhyme label="c" type="m" corresp="#s4:l3">baert</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Maer zy bereyden, haer om te <rhyme label="a" type="f">scheyden</rhyme>,</l>
        <l id="s5:l2" met="5" type="+-">Als den valjanden, neemt hy hare <rhyme label="b" type="f">handen</rhyme>,</l>
        <l id="s5:l3" met="3" type="+-">Recht haer op seer <rhyme label="c" type="m">koen</rhyme>,</l>
        <l id="s5:l4" met="5" type="+-">Ey siet doch, siet doch, wat kan Liefd' al <rhyme label="c" type="m" corresp="#s5:l3">doen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Nu gaen de knapen, drijven haer <rhyme label="a" type="f">schapen</rhyme>,</l>
        <l id="s6:l2" met="5" type="+-">Binnen haer palen, want de son gaet <rhyme label="b" type="f">dalen</rhyme>,</l>
        <l id="s6:l3" met="3" type="+-">En de stal is <rhyme label="c" type="m">veer</rhyme>,</l>
        <l id="s6:l4" met="5" type="+-">Ey siet doch, siet doch, Phillis groetse <rhyme label="c" type="m" corresp="#s6:l3">seer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Adieu mijn kroone, adieu mijn <rhyme label="a" type="f">schoone</rhyme>,</l>
        <l id="s7:l2" met="5" type="+-">Adieu mijn leven, wilt hem niet <rhyme label="b" type="f">begeven</rhyme></l>
        <l id="s7:l3" met="3" type="+-">Die u soeckt op <rhyme label="c" type="m">eer</rhyme>,</l>
        <l id="s7:l4" met="5" type="+-">Ey Amarillis, kom doch morghen <rhyme label="c" type="m" corresp="#s7:l3">weer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

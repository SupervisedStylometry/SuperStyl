  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Al wie op God <rhyme label="a" type="m">vertrouwt</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Altyd verzekert <rhyme label="a" type="m" corresp="#s1:l1">bouwt</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Want hem is van all' <rhyme label="b" type="m">eeuwigheid</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Gods hulp en bystand toe <rhyme label="b" type="m" corresp="#s1:l3">bereid</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Hy gaat steets veilig <rhyme label="a" type="m">voort</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Zelfs in den wildsten <rhyme label="a" type="m" corresp="#s2:l1">oordt</rhyme>;</l>
        <l id="s2:l3" met="4" type="-+">Hy wordt, door een onzigtb're <rhyme label="b" type="m">hand</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Gered van leeuwen <rhyme label="b" type="m" corresp="#s2:l3">drakentand</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Zinkt hy in eenen <rhyme label="a" type="m">put</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">God is zyn troost en <rhyme label="a" type="m" corresp="#s3:l1">stut</rhyme>;</l>
        <l id="s3:l3" met="4" type="-+">Die plaatst hem, zyner deugd ten <rhyme label="b" type="m">loon</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Op eenen hoog Verheven <rhyme label="b" type="m" corresp="#s3:l3">troon</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Myn ziel, wees des <rhyme label="a" type="m">gerust</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Dit is aan U <rhyme label="a" type="m" corresp="#s4:l1">bewust</rhyme>.</l>
        <l id="s4:l3" met="4" type="-+">Gaa voort, Gods oog is steets <rhyme label="b" type="m">geweest</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Op die hem eert, bemint en <rhyme label="b" type="m" corresp="#s4:l3">vreest</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Zyn goedheid zal <rhyme label="a" type="m">bestaan</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Als 't al zal zyn <rhyme label="a" type="m" corresp="#s5:l1">vergaan</rhyme>.</l>
        <l id="s5:l3" met="4" type="-+">God troost zyn knegten in den <rhyme label="b" type="m">nood</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">En redt hun zielen van de <rhyme label="b" type="m" corresp="#s5:l3">dood</rhyme>.</l>
      </lg>
    </lg>
  </text>

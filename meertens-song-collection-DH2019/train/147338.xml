<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>147338</id>
    <date>
      <year-start>1664</year-start>
      <year-end>1664</year-end>
    </date>
    <tags/>
    <melody>Verdwaalde koningin</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">AAndacht is <rhyme label="a" type="f">afgescheyden</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Van waan <rhyme label="b" type="m">Godsdienstigheen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Die door 't vernufts <rhyme label="a" type="f" corresp="#s1:l1">verleiden</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Elck voor sich selfs gaat <rhyme label="b" type="m" corresp="#s1:l2">smeen</rhyme>:</l>
        <l id="s1:l5" met="2" type="-+">Hy is niet <rhyme label="c" type="m">recht</rhyme></l>
        <l id="s1:l6" met="2" type="-+">Die op ons <rhyme label="c" type="m" corresp="#s1:l5">hecht</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Door vleiende <rhyme label="d" type="f">propoosten</rhyme>,</l>
        <l id="s1:l8" met="2" type="-+">In Godes <rhyme label="e" type="m">woordt</rhyme></l>
        <l id="s1:l9" met="2" type="-+">Nooit meer <rhyme label="e" type="m" corresp="#s1:l8">gehoort</rhyme>:</l>
        <l id="s1:l10" met="3" type="-+">Die 't onrecht ons <rhyme label="d" type="f" corresp="#s1:l7">vertroosten</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">'t En magh geen aandacht <rhyme label="a" type="f">heeten</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Die nut is voor 't <rhyme label="b" type="m">gemoedt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Al maakt hy't oogh <rhyme label="a" type="f" corresp="#s2:l1">bekreeten</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Door tranen <rhyme label="b" type="m" corresp="#s2:l2">overvloedt</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Die niet met <rhyme label="c" type="m">kracht</rhyme></l>
        <l id="s2:l6" met="2" type="-+">Wordt <rhyme label="c" type="m" corresp="#s2:l5">voortgebracht</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Door wicht van stercke <rhyme label="d" type="f">reeden</rhyme>,</l>
        <l id="s2:l8" met="2" type="-+">Niet die 't <rhyme label="e" type="m">vernuft</rhyme></l>
        <l id="s2:l9" met="2" type="-+">Selfs heeft <rhyme label="e" type="m" corresp="#s2:l8">gesuft</rhyme>,</l>
        <l id="s2:l10" met="3" type="-+">Uyt viese <rhyme label="d" type="f" corresp="#s2:l7">driftigheden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Noch ydel woorden <rhyme label="a" type="f">zaajen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Daar door 't onkundig <rhyme label="b" type="m">hert</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Met bygeloofs <rhyme label="a" type="f" corresp="#s3:l1">vertaajen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Dikmaels verbrijselt <rhyme label="b" type="m" corresp="#s3:l2">werdt</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Alst slechts <rhyme label="c" type="m">geteemt</rhyme></l>
        <l id="s3:l6" met="2" type="-+">Naar aandacht <rhyme label="c" type="m" corresp="#s3:l5">sweemt</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">En Mensch aan Mensch doet <rhyme label="d" type="f">hangen</rhyme>.</l>
        <l id="s3:l8" met="2" type="-+">
          <rhyme label="e" type="m">Tragedi-spel</rhyme>
        </l>
        <l id="s3:l9" met="2" type="-+">Kan daar mee <rhyme label="e" type="m" corresp="#s3:l8">wel</rhyme></l>
        <l id="s3:l10" met="3" type="-+">Een dwaas verstant <rhyme label="d" type="f" corresp="#s3:l7">bevangen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Hoe dat sy de <rhyme label="a" type="f">gedachten</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Door yd'le waarheits <rhyme label="b" type="m">schijn</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Komt krachtiger <rhyme label="a" type="f" corresp="#s4:l1">verkrachten</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Hoe snooder <rhyme label="b" type="m" corresp="#s4:l2">Ziel-fenijn</rhyme>.</l>
        <l id="s4:l5" met="2" type="-+">Geen aandacht <rhyme label="c" type="m">goedt</rhyme>,</l>
        <l id="s4:l6" met="2" type="-+">Als die 't <rhyme label="c" type="m" corresp="#s4:l5">gemoedt</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Aan Godts gebodt doet <rhyme label="d" type="f">kleeven</rhyme>,</l>
        <l id="s4:l8" met="2" type="-+">Soo 't in Godts <rhyme label="e" type="m">wet</rhyme></l>
        <l id="s4:l9" met="2" type="-+">(En nergens <rhyme label="e" type="m" corresp="#s4:l8">bet</rhyme>)</l>
        <l id="s4:l10" met="3" type="-+">Met letters is <rhyme label="d" type="f" corresp="#s4:l7">geschreven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Willem Sluiter</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Heer, uws verstants is geen <rhyme label="a" type="m">getal</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Maar wy en weten niet met <rhyme label="a" type="m" corresp="#s1:l1">al</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Ten zy dat gy ons komt <rhyme label="b" type="f">verlichten</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">En door uw Geest selfs <rhyme label="b" type="f" corresp="#s1:l3">onder-richten</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wie ware wijsheit oit <rhyme label="a" type="m">ontbeert</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">En s' in geloof van u <rhyme label="a" type="m" corresp="#s2:l1">begeert</rhyme>.</l>
        <l id="s2:l3" met="4" type="-+">Dien geeft gy s' ook altoos en <rhyme label="b" type="f">immer</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">En gy verwijt uw mildtheit <rhyme label="b" type="f" corresp="#s2:l3">nimmer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Uit uwe mont komt kennis <rhyme label="a" type="m">voort</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Door d'openbaring van uw <rhyme label="a" type="m" corresp="#s3:l1">Woort</rhyme>;</l>
        <l id="s3:l3" met="4" type="-+">Geef ons den weg van uw <rhyme label="b" type="f">bevelen</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Dan te verstaan in allen <rhyme label="b" type="f" corresp="#s3:l3">deelen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Schoon ons' verstant verduistert <rhyme label="a" type="m">is</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Ia selfs de dikke <rhyme label="a" type="m" corresp="#s4:l1">duisternis</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Uw hemelsch licht en groote <rhyme label="b" type="f">luister</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Breekt krachtig door, en blinkt in 't <rhyme label="b" type="f" corresp="#s4:l3">duister</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">'t Is nu de tijt, dat 't aardsche <rhyme label="a" type="m">dal</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Vol van uw kennis wesen <rhyme label="a" type="m" corresp="#s5:l1">sal</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Gelijk de wat'ren sich <rhyme label="b" type="f">uitrekken</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">En al den boom der zee <rhyme label="b" type="f" corresp="#s5:l3">bedekken</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">'t Is nu den tijt, dat <rhyme label="a" type="m">ieder-een</rhyme></l>
        <l id="s6:l2" met="4" type="-+">U kennen sal, soo groot als <rhyme label="a" type="m" corresp="#s6:l1">kleen</rhyme>.</l>
        <l id="s6:l3" met="4" type="-+">De tijden der <rhyme label="b" type="f">onwetenheden</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Zijn voor ons' eeuw al lang <rhyme label="b" type="f" corresp="#s6:l3">verleden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">O Heil-Son, breek dan nu <rhyme label="a" type="m">her-voor</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Straal onse herten door en <rhyme label="a" type="m" corresp="#s7:l1">door</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Op dat wy u en uwen <rhyme label="b" type="f">Vader</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Recht mogen kennen <rhyme label="b" type="f" corresp="#s7:l3">allegader</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Dat alles ons als drek en <rhyme label="a" type="m">slijk</rhyme></l>
        <l id="s8:l2" met="4" type="-+">By dees' uw kennis-schat <rhyme label="a" type="m" corresp="#s8:l1">gelijk'</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Soo dat wy s' ook voor silver <rhyme label="b" type="f">keuren</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">En meer dan 't fijnste gout <rhyme label="b" type="f" corresp="#s8:l3">na-speuren</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Door uwe kennis daar 't <rhyme label="a" type="m">geheel</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Op aankomt, Heer, sult gy'er <rhyme label="a" type="m" corresp="#s9:l1">veel</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Rechtveerdig maken van haar <rhyme label="b" type="f">sonden</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">En uw genaad' en heil <rhyme label="b" type="f" corresp="#s9:l3">verkonden</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Gy dient ons, tot uw' roem en <rhyme label="a" type="m">prijs</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">De midd'len tot goed <rhyme label="a" type="m" corresp="#s10:l1">onderwijs</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Seer rijklik toe: laat s' ons door <rhyme label="b" type="f">sluimen</rhyme></l>
        <l id="s10:l4" met="4" type="-+">En achteloosheit niet <rhyme label="b" type="f" corresp="#s10:l3">versuimen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Ont-trek ons noit uw Geest en <rhyme label="a" type="m">Woort</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Maar trek ons daar door krachtig <rhyme label="a" type="m" corresp="#s11:l1">voort</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Op dat wy ons aan u <rhyme label="b" type="f">gewennen</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">En u met liefd' en lust <rhyme label="b" type="f" corresp="#s11:l3">na-rennen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Waar souden wy doch anders <rhyme label="a" type="m">heen</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Heer Iesus, dan tot u <rhyme label="a" type="m" corresp="#s12:l1">alleen</rhyme>?</l>
        <l id="s12:l3" met="4" type="-+">Gy hebt des eeuw'gen levens <rhyme label="b" type="f">woorden</rhyme>.</l>
        <l id="s12:l4" met="4" type="-+">Sy dwaalden noit die die recht <rhyme label="b" type="f" corresp="#s12:l3">hoorden</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Verleen ons, dat wy die <rhyme label="a" type="m">voortaan</rhyme></l>
        <l id="s13:l2" met="4" type="-+">Soo in ons' herten <rhyme label="a" type="m" corresp="#s13:l1">overslaan</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Als eertijts uw aandacht'ge <rhyme label="b" type="f">Moeder</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Die alsins socht dit <rhyme label="b" type="f" corresp="#s13:l3">zielen-voeder</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Die ook sorgvuldig and'ren <rhyme label="a" type="m">riedt</rhyme></l>
        <l id="s14:l2" met="4" type="-+">Alleen te doen wat gy <rhyme label="a" type="m" corresp="#s14:l1">gebiedt</rhyme>.</l>
        <l id="s14:l3" met="4" type="-+">O! konden wy die less' <rhyme label="b" type="f">onthouwen</rhyme></l>
        <l id="s14:l4" met="4" type="-+">Van die gezegentst' aller <rhyme label="b" type="f" corresp="#s14:l3">vrouwen</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Vermits men u met <rhyme label="a" type="m">menschen-leer</rhyme></l>
        <l id="s15:l2" met="4" type="-+">Vergeefs en vruchtloos dien' en <rhyme label="a" type="m" corresp="#s15:l1">eer'</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">Soo wilt ons doch daar van <rhyme label="b" type="f">bewaren</rhyme>,</l>
        <l id="s15:l4" met="4" type="-+">En uwen will' recht <rhyme label="b" type="f" corresp="#s15:l3">openbaren</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Indien een schaapken van u <rhyme label="a" type="m">dwaalt</rhyme>,</l>
        <l id="s16:l2" met="4" type="-+">O goedertieren Herder, haal <rhyme label="a" type="m" corresp="#s16:l1">'t</rhyme>,</l>
        <l id="s16:l3" met="4" type="-+">En breng 't weer op uw graaf'ge <rhyme label="b" type="f">weiden</rhyme>,</l>
        <l id="s16:l4" met="4" type="-+">Daar gy uw kudde selfs wilt <rhyme label="b" type="f" corresp="#s16:l3">leiden</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Heer, wijs ons uwe wegen <rhyme label="a" type="m">aan</rhyme>,</l>
        <l id="s17:l2" met="4" type="-+">En leer ons uwe paden <rhyme label="a" type="m" corresp="#s17:l1">gaan</rhyme>.</l>
        <l id="s17:l3" met="4" type="-+">Geleid ons in uw heil'ge <rhyme label="b" type="f">waarheit</rhyme>,</l>
        <l id="s17:l4" met="4" type="-+">Die 't oog verlicht met hemels <rhyme label="b" type="f" corresp="#s17:l3">klaarheit</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Volbreng in ons 't geen gy <rhyme label="a" type="m">begint</rhyme>,</l>
        <l id="s18:l2" met="4" type="-+">Op dat wy nimmer siende <rhyme label="a" type="m" corresp="#s18:l1">blint</rhyme></l>
        <l id="s18:l3" met="4" type="-+">Noch hoorend doof gevonden <rhyme label="b" type="f">werden</rhyme>,</l>
        <l id="s18:l4" met="4" type="-+">Maar tot den eind' in 't goe <rhyme label="b" type="f" corresp="#s18:l3">volherden</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">Op dat wy, die alhier ten <rhyme label="a" type="m">deel</rhyme></l>
        <l id="s19:l2" met="4" type="-+">Slechts kennen, namaals ook <rhyme label="a" type="m" corresp="#s19:l1">geheel</rhyme>,</l>
        <l id="s19:l3" met="4" type="-+">En op een recht-volmaakte <rhyme label="b" type="f">wijse</rhyme>,</l>
        <l id="s19:l4" met="4" type="-+">Hier boven, kennen, u ten <rhyme label="b" type="f" corresp="#s19:l3">prijse</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">Hoe heerlik sal dan ons' <rhyme label="a" type="m">gesicht</rhyme>,</l>
        <l id="s20:l2" met="4" type="-+">In uw licht sien het eeuwig <rhyme label="a" type="m" corresp="#s20:l1">licht</rhyme>,</l>
        <l id="s20:l3" met="4" type="-+">En, door de vreugt gansch <rhyme label="b" type="f">opgetogen</rhyme>,</l>
        <l id="s20:l4" met="4" type="-+">Uw soetheit sien en smaken <rhyme label="b" type="f" corresp="#s20:l3">mogen</rhyme>!</l>
      </lg>
    </lg>
  </text>
</song>

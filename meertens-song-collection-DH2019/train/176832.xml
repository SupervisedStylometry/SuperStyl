  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Ryst op mijn ziel met al u <rhyme label="a" type="m">kracht</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Looft u verlosser met <rhyme label="a" type="m" corresp="#s1:l1">aendacht</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Die door sijn sterven heeft <rhyme label="b" type="f">verslaghen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">U Vyanden, Hel, Duyvel, <rhyme label="c" type="m">Doodt</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">En heeft door sijn opstandingh <rhyme label="c" type="m" corresp="#s1:l4">groot</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Haer Heerschappy ten thoon <rhyme label="b" type="f" corresp="#s1:l3">ghedraghen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Christus wy loven u te <rhyme label="a" type="m">saem</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Voor sulcken liefde <rhyme label="a" type="m" corresp="#s2:l1">aenghenaem</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Dat ghy onse verwinners <rhyme label="b" type="f">woedigh</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Door uwe stramen hebt <rhyme label="c" type="m">ghewont</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Door u banden haer krachten <rhyme label="c" type="m" corresp="#s2:l4">bondt</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">En smoort haer door u wonden <rhyme label="b" type="f" corresp="#s2:l3">bloedigh</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Lof, die om onse zond’ <rhyme label="a" type="m">alleen</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Den bitt’ren doodt, soo hebt <rhyme label="a" type="m" corresp="#s3:l1">doorstreen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Die ons met eeuw’ghe smaet <rhyme label="b" type="f">verwachte</rhyme>:</l>
        <l id="s3:l4" met="4" type="-+">Lof, die om ons <rhyme label="c" type="m">gherechtigheyt</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Verresen zijt met <rhyme label="c" type="m" corresp="#s3:l4">heerlijckheyt</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">En op-ghestaen met grooter <rhyme label="b" type="f" corresp="#s3:l3">machte</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Daer door ghy al te samen <rhyme label="a" type="m">meed</rhyme>’</l>
        <l id="s4:l2" met="4" type="-+">Verworden hebt den heyl’ghen <rhyme label="a" type="m" corresp="#s4:l1">vreed</rhyme>’</l>
        <l id="s4:l3" met="4" type="-+">Met uwen en met onsen <rhyme label="b" type="f">Vader</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">En ons nu hebt versamelt <rhyme label="c" type="m">bly</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Tot een verkoren <rhyme label="c" type="m" corresp="#s4:l4">Borghery</rhyme>.</l>
        <l id="s4:l6" met="4" type="-+">Met ‘t Hemelsch gheselschap te <rhyme label="b" type="f" corresp="#s4:l3">gader</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ons Hert, Ziel, en <rhyme label="a" type="m">inwendigheyt</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Looft u met grooter <rhyme label="a" type="m" corresp="#s5:l1">vrolijckheyt</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Kracht, Raet, Heldt, en eeuwighe <rhyme label="b" type="f">Koningh</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Geeft ons oock te verrijsen <rhyme label="c" type="m">meest</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Voortaen met ons ghemoet, en <rhyme label="c" type="m" corresp="#s5:l4">Geest</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Tot u en tot u heyl’ghe <rhyme label="b" type="f" corresp="#s5:l3">woningh</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Dat d’oude Mensch mach t’onder <rhyme label="a" type="m">gaen</rhyme></l>
        <l id="s6:l2" met="4" type="-+">In ons, en weer de Nieu <rhyme label="a" type="m" corresp="#s6:l1">opstaen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">In een vernieut ghemoet en <rhyme label="b" type="f">leven</rhyme>:</l>
        <l id="s6:l4" met="4" type="-+">Dat wy die soo verrijsen <rhyme label="c" type="m">hier</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Oock moghen naemaels <rhyme label="c" type="m" corresp="#s6:l4">goedertier</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Verrijsen tot u Rijck <rhyme label="b" type="f" corresp="#s6:l3">verheven</rhyme>.</l>
      </lg>
    </lg>
  </text>

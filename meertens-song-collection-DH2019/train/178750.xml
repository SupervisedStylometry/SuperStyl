  <author>François Halma</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">O Myn ziele, prys den <rhyme label="a" type="f">Heere</rhyme>.</l>
        <l id="s1:l2" met="4" type="+-">'k Zal den Heer' met keel en <rhyme label="b" type="m">snaar</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Pryzen, nu ik, t'zyner <rhyme label="a" type="f" corresp="#s1:l1">eere</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Hier noch leeve in 't <rhyme label="b" type="m" corresp="#s1:l2">openbaar</rhyme>;</l>
        <l id="s1:l5" met="4" type="+-">'k Zal den Heer', wiens gunste ik <rhyme label="c" type="m">ken</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Zingen, nu ik hier noch <rhyme label="c" type="m" corresp="#s1:l5">ben</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Wilt op Prinssen niet <rhyme label="a" type="f">betrouwen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Op het ydel menschen <rhyme label="b" type="m">kindt</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Daar geen heil op is te <rhyme label="a" type="f" corresp="#s2:l1">bouwen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Want zyn geest gaat als de <rhyme label="b" type="m" corresp="#s2:l2">windt</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Uit van hem; hy keert tot <rhyme label="c" type="m">aard'</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Voor de doodt noch 't graf <rhyme label="c" type="m" corresp="#s2:l5">bewaart</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Dan vergaan al zyn <rhyme label="a" type="f">gedachten</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Die hy lang beraadslaagt <rhyme label="b" type="m">heeft</rhyme>.</l>
        <l id="s3:l3" met="4" type="+-">Zalig is die mensche <rhyme label="a" type="f" corresp="#s3:l1">t'achten</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Die in 's Heeren vreeze <rhyme label="b" type="m" corresp="#s3:l2">leeft</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">En zyn hulp van Godt <rhyme label="c" type="m">verwacht</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Jakobs Godt, geducht in <rhyme label="c" type="m" corresp="#s3:l5">kracht</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Die zyn heil wacht van 't <rhyme label="a" type="f">vermogen</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Van den Heere zynen <rhyme label="b" type="m">Godt</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Die gemaakt heeft 's hemels <rhyme label="a" type="f" corresp="#s4:l1">boogen</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">D'aarde en zee, door zyn <rhyme label="b" type="m" corresp="#s4:l2">gebodt</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">En ook al wat in haar <rhyme label="c" type="m">is</rhyme>;</l>
        <l id="s4:l6" met="4" type="+-">Eeuwig in zyn trouw <rhyme label="c" type="m" corresp="#s4:l5">gewis</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Godt, die hier den hard <rhyme label="a" type="f">verdrukten</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Recht doet; en de geen met <rhyme label="b" type="m">broodt</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Ruim verzaadigt die zich <rhyme label="a" type="f" corresp="#s5:l1">bukten</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Flaau van honger tot de <rhyme label="b" type="m" corresp="#s5:l2">doodt</rhyme>;</l>
        <l id="s5:l5" met="4" type="+-">D'Opperheer, verlost zyn <rhyme label="c" type="m">volk</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Uit den diepen <rhyme label="c" type="m" corresp="#s5:l5">kerkerkolk</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Godt, de Heer, ontsluit ook <rhyme label="a" type="f">d'oogen</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Van de blinden, die niets <rhyme label="b" type="m">zien</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Recht hen op, die, <rhyme label="a" type="f" corresp="#s6:l1">neêrgebogen</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Tot zyn hulpe in nooden <rhyme label="b" type="m" corresp="#s6:l2">vliên</rhyme>:</l>
        <l id="s6:l5" met="4" type="+-">Hy lieft al 't rechtvaardig <rhyme label="c" type="m">zaadt</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Dat in zyne wegen <rhyme label="c" type="m" corresp="#s6:l5">gaat</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Hy bewaart de <rhyme label="a" type="f">vreemdelingen</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Houdt den weeze in zynen <rhyme label="b" type="m">stant</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">En de weduwe, in de <rhyme label="a" type="f" corresp="#s7:l1">kringen</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Van der goddeloozen <rhyme label="b" type="m" corresp="#s7:l2">landt</rhyme>:</l>
        <l id="s7:l5" met="4" type="+-">Dien hun weg wordt <rhyme label="c" type="m">omgekeert</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Door den Heer', van hun <rhyme label="c" type="m" corresp="#s7:l5">onteert</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Godt, de Heerscher, zal <rhyme label="a" type="f">regeeren</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Met zyn kracht in <rhyme label="b" type="m">eeuwigheit</rhyme>;</l>
        <l id="s8:l3" met="4" type="+-">Eeuwig blyft de Heer der <rhyme label="a" type="f" corresp="#s8:l1">Heeren</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">ô Gy Sion; naar 't <rhyme label="b" type="m" corresp="#s8:l2">bescheit</rhyme>:</l>
        <l id="s8:l5" met="4" type="+-">Van geslachte tot <rhyme label="c" type="m">geslacht</rhyme></l>
        <l id="s8:l6" met="4" type="+-">Wordt zyn groote naam <rhyme label="c" type="m" corresp="#s8:l5">gedacht</rhyme>.</l>
      </lg>
    </lg>
  </text>

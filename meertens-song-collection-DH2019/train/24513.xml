<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>24513</id>
    <date>
      <year-start>1476</year-start>
      <year-end>1500</year-end>
    </date>
    <tags>
      <tag standard-name="dialooglied" translation="dialogue song">dialooglied</tag>
    </tags>
    <melody>Maagdje wilt gij geestelijk wezen</melody>
    <categories>
      <category translation="formal genres">formele genres</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Heffe op din cruce myn alre liefste <rhyme label="a" type="m">bruyt</rhyme></l>
        <l id="s1:l2" met="4" type="-+">volge my nae ende ganc dyns selues <rhyme label="a" type="m" corresp="#s1:l1">wt</rhyme></l>
        <l id="s1:l3" met="4" type="-+">want icket gedragen heb voer <rhyme label="b" type="m">di</rhyme></l>
        <l id="s1:l4" met="4" type="-+">heeftu mi lief soe volget <rhyme label="b" type="m" corresp="#s1:l3">my</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">O Jhesus alreliefste <rhyme label="a" type="m">here</rhyme></l>
        <l id="s2:l2" met="4" type="-+">ic byn noch jonc ende <rhyme label="a" type="m" corresp="#s2:l1">teder</rhyme></l>
        <l id="s2:l3" met="4" type="-+">ic heb di lief dat is ommer <rhyme label="b" type="m">waer</rhyme></l>
        <l id="s2:l4" met="4" type="-+">mer din cruce dat is mi voel te <rhyme label="b" type="m" corresp="#s2:l3">swaer</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ick was noch jonger doe ic dat <rhyme label="a" type="m">droech</rhyme></l>
        <l id="s3:l2" met="4" type="-+">clage niet du byste sterck <rhyme label="a" type="m" corresp="#s3:l1">genoech</rhyme></l>
        <l id="s3:l3" met="4" type="-+">wanneer du biste alt ende <rhyme label="b" type="m">colt</rhyme></l>
        <l id="s3:l4" met="4" type="-+">soe en hebstu des cruces geen <rhyme label="b" type="m" corresp="#s3:l3">gewalt</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Wie mach liden dat <rhyme label="a" type="m">bedwanck</rhyme></l>
        <l id="s4:l2" met="4" type="-+">der dage is voele dat jaer is <rhyme label="a" type="m" corresp="#s4:l1">lanc</rhyme></l>
        <l id="s4:l3" met="4" type="-+">ic byn des cruces <rhyme label="b" type="m">ongewoen</rhyme></l>
        <l id="s4:l4" met="4" type="-+">och spaert my myn alre liefste <rhyme label="b" type="m" corresp="#s4:l3">brudegom</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Noch bystu lief dus haeste <rhyme label="a" type="m">verlegen</rhyme></l>
        <l id="s5:l2" met="4" type="-+">du moetste noch stryden al dyn <rhyme label="a" type="m" corresp="#s5:l1">dage</rhyme></l>
        <l id="s5:l3" met="4" type="-+">ic wil castyen dyn jonge <rhyme label="b" type="m">lyf</rhyme></l>
        <l id="s5:l4" met="4" type="-+">du weerste my anders voel te <rhyme label="b" type="m" corresp="#s5:l3">styf</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Here dattu wilste dat moet ommer <rhyme label="a" type="m">wesen</rhyme></l>
        <l id="s6:l2" met="4" type="-+">mer des cruces en  mach ic niet <rhyme label="a" type="m" corresp="#s6:l1">genesen</rhyme></l>
        <l id="s6:l3" met="4" type="-+">mer wylstuut hebben dat icket sal <rhyme label="b" type="m">dragen</rhyme></l>
        <l id="s6:l4" met="4" type="-+">soe moet ic krencken ende <rhyme label="b" type="m" corresp="#s6:l3">versagen</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Waenstu inden rosen te <rhyme label="a" type="m">baeden</rhyme></l>
        <l id="s7:l2" met="4" type="-+">du moetste jerst doer die doernen <rhyme label="a" type="m" corresp="#s7:l1">waden</rhyme></l>
        <l id="s7:l3" met="4" type="-+">sich aen dyn cruce ende aen dat <rhyme label="b" type="m">myn</rhyme></l>
        <l id="s7:l4" met="4" type="-+">hoe ongelic swaer datse <rhyme label="b" type="m" corresp="#s7:l3">syn</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Wy lesen inder hiliger <rhyme label="a" type="m">scryft</rhyme></l>
        <l id="s8:l2" met="4" type="-+">dyn juc is suet dyn borden syn <rhyme label="a" type="m" corresp="#s8:l1">licht</rhyme></l>
        <l id="s8:l3" met="4" type="-+">hoe bystu my dus anxtelicke <rhyme label="b" type="m">hart</rhyme></l>
        <l id="s8:l4" met="4" type="-+">och spaert my myn alre liefste brudegom <rhyme label="b" type="m" corresp="#s8:l3">saert</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Ongewoente beswaert den <rhyme label="a" type="m">moet</rhyme></l>
        <l id="s9:l2" met="4" type="-+">mer lydet ende swyget et wort noch <rhyme label="a" type="m" corresp="#s9:l1">guet</rhyme></l>
        <l id="s9:l3" met="4" type="-+">myn cruce dat is soe costelicken <rhyme label="b" type="m">pant</rhyme></l>
        <l id="s9:l4" met="4" type="-+">den ic dat gonne dat is myn <rhyme label="b" type="m" corresp="#s9:l3">vrent</rhyme></l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Dinen vrenden geuestu weynich <rhyme label="a" type="m">troest</rhyme></l>
        <l id="s10:l2" met="4" type="-+">my gruwelt voer den swaren  <rhyme label="a" type="m" corresp="#s10:l1">last</rhyme></l>
        <l id="s10:l3" met="4" type="-+">ic sorge ic en sals niet moegen <rhyme label="b" type="m">herden</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Och lieue here wes sal myns <rhyme label="b" type="m" corresp="#s10:l3">geweerden</rhyme></l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Dat hemelrike dat lidet <rhyme label="a" type="m">gewelt</rhyme></l>
        <l id="s11:l2" met="4" type="-+">mer du bist noch van mynnen <rhyme label="a" type="m" corresp="#s11:l1">colt</rhyme></l>
        <l id="s11:l3" met="4" type="-+">hebstu my lief het wort noch <rhyme label="b" type="m">guet</rhyme></l>
        <l id="s11:l4" met="4" type="-+">want rechte mynne maket al dynck <rhyme label="b" type="m" corresp="#s11:l3">suet</rhyme></l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Och here gheeft my der mynnen <rhyme label="a" type="m">brant</rhyme></l>
        <l id="s12:l2" met="4" type="-+">myne crancht is di wal <rhyme label="a" type="m" corresp="#s12:l1">becant</rhyme></l>
        <l id="s12:l3" met="4" type="-+">laetstu my op my seluen <rhyme label="b" type="m">staen</rhyme></l>
        <l id="s12:l4" met="4" type="-+">soe weetstu wal dat ic moet <rhyme label="b" type="m" corresp="#s12:l3">vergaen</rhyme></l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Ick byn swaert ende <rhyme label="a" type="m">suuerlic</rhyme></l>
        <l id="s13:l2" met="4" type="-+">ic byn suer ende <rhyme label="a" type="m" corresp="#s13:l1">mynnentlic</rhyme></l>
        <l id="s13:l3" met="4" type="-+">ick geue den arbeyt ende <rhyme label="b" type="m">rust</rhyme></l>
        <l id="s13:l4" met="4" type="-+">betrouwe op my soe staestu <rhyme label="b" type="m" corresp="#s13:l3">vast</rhyme></l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Och here oft ommer wesen <rhyme label="a" type="m">mach</rhyme></l>
        <l id="s14:l2" met="4" type="-+">des cruces neem ic geen <rhyme label="a" type="m" corresp="#s14:l1">verdrach</rhyme></l>
        <l id="s14:l3" met="4" type="-+">mer wylstuut hebben ende moet dat ommer <rhyme label="b" type="m">syn</rhyme></l>
        <l id="s14:l4" met="4" type="-+">soe geschie dyn wille ende niet die <rhyme label="b" type="m" corresp="#s14:l3">myn</rhyme></l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Solde ic din ryke ende hulde <rhyme label="a" type="m">verliesen</rhyme></l>
        <l id="s15:l2" met="4" type="-+">ic wolde eer hondert crucen <rhyme label="a" type="m" corresp="#s15:l1">verkiesen</rhyme></l>
        <l id="s15:l3" met="4" type="-+">Here gheuet macht ende <rhyme label="b" type="m">lydsamheit</rhyme></l>
        <l id="s15:l4" met="4" type="-+">ende cruce my wal het sy my lief of <rhyme label="b" type="m" corresp="#s15:l3">leet</rhyme></l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Ist dat dyt cruce te herten <rhyme label="a" type="m">gaet</rhyme></l>
        <l id="s16:l2" met="4" type="-+">soe dencket wat ic di hebbe <rhyme label="a" type="m" corresp="#s16:l1">bereyt</rhyme></l>
        <l id="s16:l3" met="4" type="-+">my seluen geue ic di te <rhyme label="b" type="m">loen</rhyme></l>
        <l id="s16:l4" met="4" type="-+">ende mitten engelen die ewige <rhyme label="b" type="m" corresp="#s16:l3">croen</rhyme></l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Lyden is myn naeste <rhyme label="a" type="m">cleet</rhyme></l>
        <l id="s17:l2" met="4" type="-+">een mantel van liden is my <rhyme label="a" type="m" corresp="#s17:l1">bereyt</rhyme></l>
        <l id="s17:l3" met="4" type="-+">sy is geuoedert mit <rhyme label="b" type="m">verdriet</rhyme></l>
        <l id="s17:l4" met="4" type="-+">Och   leyder ic en kanse verslyten <rhyme label="b" type="m" corresp="#s17:l3">niet</rhyme></l>
      </lg>
    </lg>
  </text>
</song>

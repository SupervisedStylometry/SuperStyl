  <author>Tannetge Kornelis Blok</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">God zy gelooft den dag komt <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">De Nagt die is <rhyme label="b" type="m">voorby</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">De grooste duysterheid <rhyme label="a" type="m" corresp="#s1:l1">vergaen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">dies zyn wy weder <rhyme label="b" type="m" corresp="#s1:l2">vry</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Van onheijl of <rhyme label="c" type="m">verdriet</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Wat in de duijstere <rhyme label="d" type="f">nagten</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Zonwijlen wel <rhyme label="c" type="m" corresp="#s1:l5">geschied</rhyme>:</l>
        <l id="s1:l8" met="3" type="-+">Ook buyten ons <rhyme label="d" type="f" corresp="#s1:l6">verwagten</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">De Morgenster is <rhyme label="a" type="m">opgegaen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Al lang gelijk men <rhyme label="b" type="m">zag</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Zy geeft de menschen te <rhyme label="a" type="m" corresp="#s2:l1">verstaen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">De komste van den <rhyme label="b" type="m" corresp="#s2:l2">dag</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">‘t Schijnt of zy voore <rhyme label="c" type="m">gaet</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Gelijk den weg <rhyme label="d" type="f">bereijden</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Om alles met’er <rhyme label="c" type="m" corresp="#s2:l5">daet</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Als tot den dag te <rhyme label="d" type="f" corresp="#s2:l6">leijden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Hoe schoon is nu den <rhyme label="a" type="m">morgenstond</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">In ‘t Oosten op <rhyme label="b" type="m">gegaen</rhyme>?</l>
        <l id="s3:l3" met="4" type="-+">God geeft door heel de wereld <rhyme label="a" type="m" corresp="#s3:l1">rond</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">de menschen te <rhyme label="b" type="m" corresp="#s3:l2">verstaen</rhyme>;</l>
        <l id="s3:l5" met="3" type="-+">Hoe magtig dat hy <rhyme label="c" type="m">is</rhyme>:</l>
        <l id="s3:l6" met="3" type="-+">Hy doet de nagt <rhyme label="d" type="f">verdwijnen</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">En tot de <rhyme label="c" type="m" corresp="#s3:l5">duisternis</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Het ligt zeer helder <rhyme label="d" type="f" corresp="#s3:l6">schijnen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Wy zien ook met vermaken <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Hoe heerlijk dat de <rhyme label="b" type="m">Zon</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Begint op Aerden op te <rhyme label="a" type="m" corresp="#s4:l1">gaen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">En hoe zy dat <rhyme label="b" type="m" corresp="#s4:l2">begon</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Wat stralen ligt en <rhyme label="c" type="m">glans</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">De vreugt van alle <rhyme label="d" type="f">dingen</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Gelijk een schoone <rhyme label="c" type="m" corresp="#s4:l5">krans</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Vercieren en <rhyme label="d" type="f" corresp="#s4:l6">omringen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Des morgens is den koelen <rhyme label="a" type="m">dan</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Ook over ‘t Velt <rhyme label="b" type="m">verspreijt</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">God toond ook aen de vrugte <rhyme label="a" type="m" corresp="#s5:l1">staen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Zijn <rhyme label="b" type="m" corresp="#s5:l2">goedertierentheid</rhyme>:</l>
        <l id="s5:l5" met="3" type="-+">Zal nu alleen den <rhyme label="c" type="m">mensch</rhyme>;</l>
        <l id="s5:l6" met="3" type="-+">Tot slapen zijn <rhyme label="d" type="f">genegen</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Nu alle ding na <rhyme label="c" type="m" corresp="#s5:l5">wensch</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Ons is van Godt <rhyme label="d" type="f" corresp="#s5:l6">verkregen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">De vogeltjes al over <rhyme label="a" type="m">lang</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Verkonde Hare <rhyme label="b" type="m">vreugt</rhyme>;</l>
        <l id="s6:l3" met="4" type="-+">Zy hebben met haer zoeten <rhyme label="a" type="m" corresp="#s6:l1">zang</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Het gantsche wout <rhyme label="b" type="m" corresp="#s6:l2">verheugt</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Het vrolyke <rhyme label="c" type="m">Geschal</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Daer mede zy God <rhyme label="d" type="f">loven</rhyme>?</l>
        <l id="s6:l7" met="3" type="-+">Gaet vele menschen <rhyme label="c" type="m" corresp="#s6:l5">al</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Verre na ‘t schynd te <rhyme label="d" type="f" corresp="#s6:l6">boven</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Hoe heerlijk is dien grooten <rhyme label="a" type="m">God</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Hoe magtig, En hoe <rhyme label="b" type="m">sterk</rhyme>?</l>
        <l id="s7:l3" met="4" type="-+">Na zijn believen en <rhyme label="a" type="m" corresp="#s7:l1">gebod</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Gaet alle ding te <rhyme label="b" type="m" corresp="#s7:l2">werk</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">‘t Schijnd alles is <rhyme label="c" type="m">verblijd</rhyme>?</l>
        <l id="s7:l6" met="3" type="-+">En toond een vrolijk <rhyme label="d" type="f">wesen</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Nu dat in desen <rhyme label="c" type="m" corresp="#s7:l5">tijd</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Het ligt is <rhyme label="d" type="f" corresp="#s7:l6">opgeresen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Den haen die heeft al lang <rhyme label="a" type="m">gekraeyt</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Eer dat den dag quam <rhyme label="b" type="m">aen</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Dit maekt de menschen heel <rhyme label="a" type="m" corresp="#s8:l1">bekaeyt</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Daerom zoo wild <rhyme label="b" type="m" corresp="#s8:l2">opstaen</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">laet u dog niet <rhyme label="c" type="m">meer</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Van beesten <rhyme label="d" type="f">overtuijgen</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Geeft hem ook prijs en <rhyme label="c" type="m" corresp="#s8:l5">eer</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Daar alle knyen voor <rhyme label="d" type="f" corresp="#s8:l6">buygen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Prijst hem die ‘t alles heeft <rhyme label="a" type="m">gemaekt</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Wat nu dus vrolijk <rhyme label="b" type="m">lagt</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">En zoo getrouwelijk heeft <rhyme label="a" type="m" corresp="#s9:l1">gewaekt</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Voor ons van desen <rhyme label="b" type="m" corresp="#s9:l2">nagt</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Dat ons geen <rhyme label="c" type="m">ongeval</rhyme></l>
        <l id="s9:l6" met="3" type="-+">of leet is <rhyme label="d" type="f">overkomen</rhyme></l>
        <l id="s9:l7" met="3" type="-+">Het geen de menschen <rhyme label="c" type="m" corresp="#s9:l5">al</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Niet zonder reden <rhyme label="d" type="f" corresp="#s9:l6">schromen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Wy bidden Heer almagtig <rhyme label="a" type="m">God</rhyme>?</l>
        <l id="s10:l2" met="3" type="-+">Geeft dat men dezen <rhyme label="b" type="m">dag</rhyme>!</l>
        <l id="s10:l3" met="4" type="-+">En allen tijd na u <rhyme label="a" type="m" corresp="#s10:l1">gebod</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Voortaen besteden <rhyme label="b" type="m" corresp="#s10:l2">mag</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">ô Vader van het <rhyme label="c" type="m">Ligt</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Laet u genade <rhyme label="d" type="f">stralen</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">En vriendelijk <rhyme label="c" type="m" corresp="#s10:l5">gezigt</rhyme>?</l>
        <l id="s10:l8" met="3" type="-+">Dog op ons <rhyme label="d" type="f" corresp="#s10:l6">nederdalen</rhyme></l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Behoed ons van den Satan <rhyme label="a" type="m">boos</rhyme>?</l>
        <l id="s11:l2" met="3" type="-+">Op dat hy <rhyme label="b" type="m">nimmermeer</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Ons en verleijde maer <rhyme label="a" type="m" corresp="#s11:l1">altoos</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Vast blijven aen u <rhyme label="b" type="m" corresp="#s11:l2">Leer</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Tot dat wy ‘t eeuwig <rhyme label="c" type="m">ligt</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">In uwen Troon <rhyme label="d" type="f">aenschouwen</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">En uw’ heilig <rhyme label="c" type="m" corresp="#s11:l5">gezigt</rhyme>,</l>
        <l id="s11:l8" met="3" type="-+">O Heer dat’s ons <rhyme label="d" type="f" corresp="#s11:l6">vertrouwen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

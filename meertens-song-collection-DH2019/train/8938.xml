  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">VAn Maria die reyne <rhyme label="a" type="m">Maecht</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Als Esaias heeft <rhyme label="a" type="m" corresp="#s1:l1">gewissaecht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Is ons gheboorn den soeten <rhyme label="a" type="m">troost</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Die ons met zijnen bloet heeft <rhyme label="a" type="m" corresp="#s2:l1">verloost</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Sijn naem heet Jesus <rhyme label="a" type="m">Christ</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Die een waere Mensch gheboorn <rhyme label="a" type="m" corresp="#s3:l1">ist</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Waer hy ons niet <rhyme label="a" type="m">gheboorn</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">So waeren wy altemael <rhyme label="a" type="m" corresp="#s4:l1">verloorn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Hy is warer Godes <rhyme label="a" type="m">Soon</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Van eewicheyt geboren zijner gnaden <rhyme label="a" type="m" corresp="#s5:l1">throon</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Godt heeft ons so lief <rhyme label="a" type="m">gehadt</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Dat hy ons met zijn lieven Soon heeft <rhyme label="a" type="m" corresp="#s6:l1">begaeft</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">End heeft hem hier op <rhyme label="a" type="m">eerden</rhyme>.</l>
        <l id="s7:l2" met="4" type="-+">Laten van der Wer'lt verspottet <rhyme label="a" type="m" corresp="#s7:l1">werden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Hy moest selfs zijn Cruys <rhyme label="a" type="m">dragen</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Om onser Sond' will'n is hy <rhyme label="a" type="m" corresp="#s8:l1">geslagen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Door eenes Menschen Sond' en <rhyme label="a" type="m">val</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">War'n verdoemt die Menschen <rhyme label="a" type="m" corresp="#s9:l1">al</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Door eens Menschen <rhyme label="a" type="m">gerechticheyt</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Is ons verworven die <rhyme label="a" type="m" corresp="#s10:l1">Salicheyt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Hy droech voorwaer onse <rhyme label="a" type="m">crancheyt</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Wt lout'rer <rhyme label="a" type="m" corresp="#s11:l1">Barmherticheyt</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Hy laedt onse smerten op <rhyme label="a" type="m">sick</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Ging in den bitteren doot <rhyme label="a" type="m" corresp="#s12:l1">willichlick</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Christ tot Schultoffer syn <rhyme label="a" type="m">leven</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Heeft in den doot <rhyme label="a" type="m" corresp="#s13:l1">gegeven</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Godt Vader cond' niemant <rhyme label="a" type="m">vinden</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">Hadt mogen <rhyme label="a" type="m" corresp="#s14:l1">overwinden</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Syn eygen soon Jesus Christus most syn <rhyme label="a" type="m">leven</rhyme></l>
        <l id="s15:l2" met="4" type="-+">Hy cond' alleen den boosen Sathan <rhyme label="a" type="m" corresp="#s15:l1">wederstreven</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Dies laet ons hem onsen een'ghen Midd'laer <rhyme label="a" type="m">nemen</rhyme>,</l>
        <l id="s16:l2" met="4" type="-+">Van syner liefd' sal ons gheen Creatuer <rhyme label="a" type="m" corresp="#s16:l1">aftrennen</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">O Heer Christ, die ghy vanden <rhyme label="a" type="m">Vader</rhyme></l>
        <l id="s17:l2" met="4" type="-+">Selfs in Hemel, tot onsen Midd'laer  vercoren <rhyme label="a" type="m" corresp="#s17:l1">bist</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Zijt ons g'nadich Christe lieve <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s18:l2" met="4" type="-+">Want wy houden u voor onsen eenighen <rhyme label="a" type="m" corresp="#s18:l1">Midd'laer</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">Help dat wy ons <rhyme label="a" type="m">vertrouwen</rhyme></l>
        <l id="s19:l2" met="4" type="-+">Maer, Heer, op dijn woort laet ons <rhyme label="a" type="m" corresp="#s19:l1">schouwen</rhyme>.</l>
      </lg>
    </lg>
  </text>

    <melody>Het vuur brandt zeer</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Albertus Buitendyck</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="+-">'T Kindt en <rhyme label="a" type="m">Maeght</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Van Sena <rhyme label="b" type="m">Catharijn</rhyme>,</l>
        <l id="s1:l3" met="2" type="+-">'t Licht pack <rhyme label="a" type="m" corresp="#s1:l1">draeght</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Des Heeren sonder <rhyme label="b" type="m" corresp="#s1:l2">pijn</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Van haer jeught met devoty <rhyme label="c" type="m">soet</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Mariam door het Ave <rhyme label="c" type="m" corresp="#s1:l5">groet</rhyme>.</l>
        <l id="s1:l7" met="2" type="-+">Haer ziel en <rhyme label="d" type="m">le'en</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Geeft Godt, en anders <rhyme label="d" type="m" corresp="#s1:l7">geen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="+-">Godt haer <rhyme label="a" type="m">Heer</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Siet sitten op een <rhyme label="b" type="m">throon</rhyme>;</l>
        <l id="s2:l3" met="2" type="+-">Stuert haer <rhyme label="a" type="m" corresp="#s2:l1">ne'er</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Wijsheydt en gaven <rhyme label="b" type="m" corresp="#s2:l2">schoon</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">Als sy seven Iaren was <rhyme label="c" type="m">oudt</rhyme>.</l>
        <l id="s2:l6" met="4" type="-+">Aen Godt haer geest, aen Christus <rhyme label="c" type="m" corresp="#s2:l5">trouwt</rhyme>.</l>
        <l id="s2:l7" met="2" type="-+">De jonge <rhyme label="d" type="m">jeught</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Tot Godt leyt ende <rhyme label="d" type="m" corresp="#s2:l7">deught</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="+-">'t Swaerst <rhyme label="a" type="m">verdriet</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Haer Ouders doen haer <rhyme label="b" type="m">an</rhyme>,</l>
        <l id="s3:l3" met="2" type="+-">Om dat <rhyme label="a" type="m" corresp="#s3:l1">niet</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Sy trouwe wil een <rhyme label="b" type="m" corresp="#s3:l2">Man</rhyme>.</l>
        <l id="s3:l5" met="4" type="-+">De Vader volght haer, als sy <rhyme label="c" type="m">bidt</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Siet op haer hooft een Duyfje <rhyme label="c" type="m" corresp="#s3:l5">wit</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">Hier door <rhyme label="d" type="m">verstaet</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Dat sy doet na Goodts <rhyme label="d" type="m" corresp="#s3:l7">raet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="+-">Haer tongh <rhyme label="a" type="m">speent</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Van spreecken drie Iaer <rhyme label="b" type="m">langh</rhyme>:</l>
        <l id="s4:l3" met="2" type="+-">'t Quaedt <rhyme label="a" type="m" corresp="#s4:l1">beweent</rhyme>;</l>
        <l id="s4:l4" met="3" type="-+">Haer vleysch houdt onder <rhyme label="b" type="m" corresp="#s4:l2">dwangh</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Door 't vasten, slagen end' <rhyme label="c" type="m">gebedt</rhyme>.</l>
        <l id="s4:l6" met="4" type="-+">Haet, mijt al dat de ziel <rhyme label="c" type="m" corresp="#s4:l5">besmet</rhyme>.</l>
        <l id="s4:l7" met="2" type="-+">Godt is haer <rhyme label="d" type="m">troost</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Noyt ydel is <rhyme label="d" type="m" corresp="#s4:l7">propoost</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="+-">
          <rhyme label="a" type="m">Menighmael</rhyme>
        </l>
        <l id="s5:l2" met="3" type="-+">Christus haer <rhyme label="b" type="m">openbaert</rhyme>;</l>
        <l id="s5:l3" met="2" type="+-">Met zijn <rhyme label="a" type="m" corresp="#s5:l1">tael</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Veel saecken haer <rhyme label="b" type="m" corresp="#s5:l2">verklaert</rhyme>.</l>
        <l id="s5:l5" met="4" type="-+">Als Satan haer met 't vleysch <rhyme label="c" type="m">bestrijdt</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Christus aen Cath'rina <rhyme label="c" type="m" corresp="#s5:l5">belijdt</rhyme>:</l>
        <l id="s5:l7" met="2" type="-+">Van 't minst tot 't <rhyme label="d" type="m">meest</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Ick ben by u <rhyme label="d" type="m" corresp="#s5:l7">geweest</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="+-">Haer, Goods <rhyme label="a" type="m">Soon</rhyme></l>
        <l id="s6:l2" met="3" type="-+">De keur van kroonen <rhyme label="b" type="m">geeft</rhyme>,</l>
        <l id="s6:l3" met="2" type="+-">d' Een gout <rhyme label="a" type="m" corresp="#s6:l1">schoon</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">De tweede doorens <rhyme label="b" type="m" corresp="#s6:l2">heeft</rhyme>:</l>
        <l id="s6:l5" met="4" type="-+">Siet niet na 't gout; de doorens <rhyme label="c" type="m">pluckt</rhyme>.</l>
        <l id="s6:l6" met="4" type="-+">Christus in haer vijf wonden <rhyme label="c" type="m" corresp="#s6:l5">druckt</rhyme>.</l>
        <l id="s6:l7" met="2" type="-+">De doorens <rhyme label="d" type="m">parst</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Sy in haer hooft dat 't <rhyme label="d" type="m" corresp="#s6:l7">knarst</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="2" type="+-">Christus <rhyme label="a" type="m">smart</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Sijn spot, sijn kruys, sijn <rhyme label="b" type="m">doodt</rhyme>,</l>
        <l id="s7:l3" met="2" type="+-">Woont in 't <rhyme label="a" type="m" corresp="#s7:l1">hart</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Met mede-lijde <rhyme label="b" type="m" corresp="#s7:l2">groot</rhyme>.</l>
        <l id="s7:l5" met="4" type="-+">d' Heer in een arme schijn, <rhyme label="c" type="m">bekleedt</rhyme>;</l>
        <l id="s7:l6" met="4" type="-+">Dese liefde groot niet <rhyme label="c" type="m" corresp="#s7:l5">vergeet</rhyme>,</l>
        <l id="s7:l7" met="2" type="-+">Dit kleedt aen <rhyme label="d" type="m">haer</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Toont blinckende en <rhyme label="d" type="m" corresp="#s7:l7">klaer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="2" type="+-">Dient een <rhyme label="a" type="m">Vrouw</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Vol met de snootste <rhyme label="b" type="m">stanck</rhyme>,</l>
        <l id="s8:l3" met="2" type="+-">Wel en <rhyme label="a" type="m" corresp="#s8:l1">trouw</rhyme>;</l>
        <l id="s8:l4" met="3" type="-+">In plaets van loon, of <rhyme label="b" type="m" corresp="#s8:l2">danck</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Van onkuysheyt groot haer <rhyme label="c" type="m">bekladt</rhyme>;</l>
        <l id="s8:l6" met="4" type="-+">'t Was 't werck van d'helsche <rhyme label="c" type="m" corresp="#s8:l5">Goliath</rhyme>:</l>
        <l id="s8:l7" met="2" type="-+">Godt troost sijn <rhyme label="d" type="m">bruyt</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Maeckt dat bedrogh komt <rhyme label="d" type="m" corresp="#s8:l7">uyt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="2" type="+-">Geest end' <rhyme label="a" type="m">vleesch</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Als sy haer gebedt <rhyme label="b" type="m">doet</rhyme>,</l>
        <l id="s9:l3" met="2" type="+-">Hoog op <rhyme label="a" type="m" corresp="#s9:l1">rees</rhyme>.</l>
        <l id="s9:l4" met="3" type="-+">Niet als Godt smaeckt haer <rhyme label="b" type="m" corresp="#s9:l2">zoet</rhyme>.</l>
        <l id="s9:l5" met="4" type="-+">'t Is haer pijn, end' grootste <rhyme label="c" type="m">torment</rhyme></l>
        <l id="s9:l6" met="4" type="-+">Soo zy 't hooghwaerdigh <rhyme label="c" type="m" corresp="#s9:l5">Sacrament</rhyme></l>
        <l id="s9:l7" met="2" type="-+">Niet dag'lijcx <rhyme label="d" type="m">heeft</rhyme>:</l>
        <l id="s9:l8" met="3" type="-+">Van dese spijs zy <rhyme label="d" type="m" corresp="#s9:l7">leeft</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="2" type="+-">Lof, noch <rhyme label="a" type="m">eer</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Noch Satans stricken <rhyme label="b" type="m">al</rhyme></l>
        <l id="s10:l3" met="2" type="+-">
          <rhyme label="a" type="m" corresp="#s10:l1">Nimmermeer</rhyme>
        </l>
        <l id="s10:l4" met="3" type="-+">Haer brengen tot een <rhyme label="b" type="m" corresp="#s10:l2">val</rhyme>.</l>
        <l id="s10:l5" met="4" type="-+">Na haer versoeck d'Heer <rhyme label="c" type="m">neder-daelt</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Haer wil, haer hart uyt 't lichaem <rhyme label="c" type="m" corresp="#s10:l5">haelt</rhyme>;</l>
        <l id="s10:l7" met="2" type="-+">Sijn wil stelt <rhyme label="d" type="m">hy</rhyme></l>
        <l id="s10:l8" met="3" type="-+">Sijn hart in hare <rhyme label="d" type="m" corresp="#s10:l7">zy</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="2" type="+-">Haer <rhyme label="a" type="m">aensicht</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Was somtijds als de <rhyme label="b" type="m">Zon</rhyme></l>
        <l id="s11:l3" met="2" type="+-">Klaer en <rhyme label="a" type="m" corresp="#s11:l1">licht</rhyme>.</l>
        <l id="s11:l4" met="3" type="-+">Haer zinnen al <rhyme label="b" type="m" corresp="#s11:l2">verwon</rhyme>.</l>
        <l id="s11:l5" met="4" type="-+">Moordenaers ende Zondaers <rhyme label="c" type="m">veel</rhyme></l>
        <l id="s11:l6" met="4" type="-+">Bekeert door haer ghebedt <rhyme label="c" type="m" corresp="#s11:l5">gheheel</rhyme>.</l>
        <l id="s11:l7" met="2" type="-+">Haer Moeder <rhyme label="d" type="m">doodt</rhyme></l>
        <l id="s11:l8" met="3" type="-+">Verweckt voor kleyn en <rhyme label="d" type="m" corresp="#s11:l7">groot</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="2" type="+-">Christus <rhyme label="a" type="m">bloedt</rhyme></l>
        <l id="s12:l2" met="3" type="-+">En vleesch uyt sijn hant <rhyme label="b" type="m">eet</rhyme>.</l>
        <l id="s12:l3" met="2" type="+-">Wie dat <rhyme label="a" type="m" corresp="#s12:l1">goedt</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Wie quaet is seker <rhyme label="b" type="m" corresp="#s12:l2">weet</rhyme>.</l>
        <l id="s12:l5" met="4" type="-+">De krancken geneest na haer <rhyme label="c" type="m">wensch</rhyme>,</l>
        <l id="s12:l6" met="4" type="-+">Sy schijnt een Engel; en geen <rhyme label="c" type="m" corresp="#s12:l5">mensch</rhyme></l>
        <l id="s12:l7" met="2" type="-+">Haer ziel vol <rhyme label="d" type="m">deught</rhyme></l>
        <l id="s12:l8" met="3" type="-+">Looft Godt in 's Hemels <rhyme label="d" type="m" corresp="#s12:l7">vreught</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="2" type="+-">Maeghden, <rhyme label="a" type="m">steeckt</rhyme></l>
        <l id="s13:l2" met="3" type="-+">Uw' handt na Doorens <rhyme label="b" type="m">wreedt</rhyme>:</l>
        <l id="s13:l3" met="2" type="+-">Weynigh <rhyme label="a" type="m" corresp="#s13:l1">spreeckt</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Al 's werelts soet <rhyme label="b" type="m" corresp="#s13:l2">vergeet</rhyme>.</l>
        <l id="s13:l5" met="4" type="-+">Uw' Doorens, versmaetheydt en <rhyme label="c" type="m">pijn</rhyme></l>
        <l id="s13:l6" met="4" type="-+">Sullen Roosen en Hoonigh <rhyme label="c" type="m" corresp="#s13:l5">zijn</rhyme>.</l>
        <l id="s13:l7" met="2" type="-+">Met anders <rhyme label="d" type="m">geen</rhyme></l>
        <l id="s13:l8" met="3" type="-+">Als met Godt zijt <rhyme label="d" type="m" corresp="#s13:l7">gemeen</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="2" type="+-"><rhyme label="a" type="m">Catharijn</rhyme>!</l>
        <l id="s14:l2" met="3" type="-+">Krijght my door u <rhyme label="b" type="m">gebedt</rhyme>:</l>
        <l id="s14:l3" met="2" type="+-">Dat geen <rhyme label="a" type="m" corresp="#s14:l1">pijn</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">Of yet mijn ziel <rhyme label="b" type="m" corresp="#s14:l2">besmet</rhyme>.</l>
        <l id="s14:l5" met="4" type="-+">Verjaeght van my 't helsche <rhyme label="c" type="m">Serpent</rhyme>.</l>
        <l id="s14:l6" met="4" type="-+">Besorght my 't heyligh <rhyme label="c" type="m" corresp="#s14:l5">Sacrament</rhyme>:</l>
        <l id="s14:l7" met="2" type="-+">In d'uur des <rhyme label="d" type="m">doodts</rhyme></l>
        <l id="s14:l8" met="3" type="-+">Versoent mijn aen 't Lam <rhyme label="d" type="m" corresp="#s14:l7">Goodts</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

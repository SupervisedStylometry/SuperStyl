    <melody>Psalm 128 Datheen</melody>
  <author>Claes Stapel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Vaader aller <rhyme label="a" type="f">dingen</rhyme>!</l>
        <l id="s1:l2" met="3" type="-+">Die deeze twee <rhyme label="b" type="m">vereend</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Wat geeft g' ons stof tot <rhyme label="a" type="f" corresp="#s1:l1">zingen</rhyme>:</l>
        <l id="s1:l4" met="3" type="-+">Nu t' been van s' mans <rhyme label="b" type="m" corresp="#s1:l2">gebeent</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">'t Vleesch uit zijn vleesch <rhyme label="c" type="f">gesprooten</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">In 's Bruigoms armen <rhyme label="d" type="m">rust</rhyme>.</l>
        <l id="s1:l7" met="3" type="-+">Gy maakt het <rhyme label="c" type="f" corresp="#s1:l5">echt-genooten</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Nu elk zijn we'er-helft <rhyme label="d" type="m" corresp="#s1:l6">kust</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Verleen dit paar uw <rhyme label="a" type="f">zeegen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Vertoon het zijnen <rhyme label="b" type="m">plicht</rhyme>;</l>
        <l id="s2:l3" met="3" type="-+">Bestier het op uw <rhyme label="a" type="f" corresp="#s2:l1">weegen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Verlicht het met uw <rhyme label="b" type="m" corresp="#s2:l2">licht</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">Dat hen geen twee-dracht <rhyme label="c" type="f">scheide</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Geen twist hun rust <rhyme label="d" type="m">verstoor'</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Geen dertelheid <rhyme label="c" type="f" corresp="#s2:l5">verleide</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Van 't deugdelijke <rhyme label="d" type="m" corresp="#s2:l6">spoor</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">De huwlijks trouw, <rhyme label="a" type="f">geleeken</rhyme></l>
        <l id="s3:l2" met="3" type="-+">By 't echt verbond der <rhyme label="b" type="m">kerk</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Verstrek een leerzaam <rhyme label="a" type="f" corresp="#s3:l1">teeken</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Daar elk zijn plicht <rhyme label="b" type="m" corresp="#s3:l2">aan-merk</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">De Kerk de Bruid des <rhyme label="c" type="f">Heere</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Gehoorzaamd Hem haar <rhyme label="d" type="m">Hoofd</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">En tracht de Vrouw te <rhyme label="c" type="f" corresp="#s3:l5">leeren</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Wat dienst haartrouw <rhyme label="d" type="m" corresp="#s3:l6">beloofd</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">De Man bemin zijn <rhyme label="a" type="f">Vrouwe</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Gelijk zijn eigen <rhyme label="b" type="m">vlees</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Dat eischt des heilands <rhyme label="a" type="f" corresp="#s4:l1">trouwe</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Die Hy zijn Bruid <rhyme label="b" type="m" corresp="#s4:l2">beweez'</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Zijn liefd ontzag geen <rhyme label="c" type="f">kerker</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Noch 't kruis dat bloed <rhyme label="d" type="m">vergoot</rhyme>:</l>
        <l id="s4:l7" met="3" type="-+">Zijn liefd en trouw was <rhyme label="c" type="f" corresp="#s4:l5">sterker</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Als d' alder-felste <rhyme label="d" type="m" corresp="#s4:l6">dood</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Dat dus de liefde <rhyme label="a" type="f">leeve</rhyme></l>
        <l id="s5:l2" met="3" type="-+">By deez' vereende <rhyme label="b" type="m">twee</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">En booven d' aarde <rhyme label="a" type="f" corresp="#s5:l1">sweeve</rhyme>;</l>
        <l id="s5:l4" met="3" type="-+">Zoo druk hen ramp noch <rhyme label="b" type="m" corresp="#s5:l2">wee</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">In 's Weerelds woeste <rhyme label="c" type="f">baaren</rhyme>.</l>
        <l id="s5:l6" met="3" type="-+">Verwek gewenschte <rhyme label="d" type="m">vrucht</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Uit dit gezeegend <rhyme label="c" type="f" corresp="#s5:l5">paaren</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">En voed z' in uwe <rhyme label="d" type="m" corresp="#s5:l6">tucht</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ai! laat hun noit <rhyme label="a" type="f">vergeeten</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Dat Gy hun Vaader <rhyme label="b" type="m">zijt</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Die door den Zoon 't <rhyme label="a" type="f" corresp="#s6:l1">geweeten</rhyme></l>
        <l id="s6:l4" met="3" type="-+">En 't droef gemoed <rhyme label="b" type="m" corresp="#s6:l2">verblijd</rhyme>:</l>
        <l id="s6:l5" met="3" type="-+">Op dat hun hert en <rhyme label="c" type="f">zinnen</rhyme></l>
        <l id="s6:l6" met="3" type="-+">U, Heer, en uwen <rhyme label="d" type="m">Zoon</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Toch booven al <rhyme label="c" type="f" corresp="#s6:l5">beminnen</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">En eeren voor uw <rhyme label="d" type="m" corresp="#s6:l6">throon</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">De Mensch verlaat zijn <rhyme label="a" type="f">Vaader</rhyme></l>
        <l id="s7:l2" met="3" type="-+">En Moeder op zijn <rhyme label="b" type="m">Vrouw</rhyme>;</l>
        <l id="s7:l3" met="3" type="-+">Maar Gy bestaat hem <rhyme label="a" type="f" corresp="#s7:l1">naader</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Verknocht door vaster <rhyme label="b" type="m" corresp="#s7:l2">trouw</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">Geen Vrouwe-liefde <rhyme label="c" type="f">wende</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Zijn herte van U <rhyme label="d" type="m">af</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Die dwaaling vind d' <rhyme label="c" type="f" corresp="#s7:l5">ellende</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Des af-vals tot haar <rhyme label="d" type="m" corresp="#s7:l6">straf</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Ach Vaader! geef hier <rhyme label="a" type="f">krachten</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Ten goede van dit <rhyme label="b" type="m">paar</rhyme>.</l>
        <l id="s8:l3" met="3" type="-+">'t Leer 't aardz om U <rhyme label="a" type="f" corresp="#s8:l1">verachten</rhyme>:</l>
        <l id="s8:l4" met="3" type="-+">'t Leer waaken in <rhyme label="b" type="m" corresp="#s8:l2">gevaar</rhyme>:</l>
        <l id="s8:l5" met="3" type="-+">'t Leer 't Weerelds leeven <rhyme label="c" type="f">wraaken</rhyme>:</l>
        <l id="s8:l6" met="3" type="-+">'t Genoeg zich met zijn <rhyme label="d" type="m">deel</rhyme>:</l>
        <l id="s8:l7" met="3" type="-+">Ia 't leer zich zelfs <rhyme label="c" type="f" corresp="#s8:l5">verzaaken</rhyme></l>
        <l id="s8:l8" met="3" type="-+">En 't geef U 't hert <rhyme label="d" type="m" corresp="#s8:l6">geheel</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

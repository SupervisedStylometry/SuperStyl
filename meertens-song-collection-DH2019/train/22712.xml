<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>22712</id>
    <date>
      <year-start>1576</year-start>
      <year-end>1582</year-end>
    </date>
    <tags>
      <tag standard-name="vermaanlied" translation="admonitory song">vermaanlied</tag>
    </tags>
    <melody>O christengeesten wil hier op achten</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>David Joris</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Christen Gheesten wilt hier op <rhyme label="a" type="f">achten</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Die hier ter werlt in druck levende <rhyme label="b" type="m">sijt</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Wilt Christi toekomst lijdtsaem <rhyme label="a" type="f" corresp="#s1:l1">verwachten</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Int gheloof nimmer doch snevende <rhyme label="b" type="m" corresp="#s1:l2">sijt</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">Tot waecken unde bidden u beghevende <rhyme label="b" type="m" corresp="#s1:l2">sijt</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Ja sterft u vleysch als Paulus <rhyme label="c" type="m">seydt</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Unde sijt ter doot altijt <rhyme label="c" type="m" corresp="#s1:l6">bereyt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">O Christen en laet u niet <rhyme label="a" type="f">berooven</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Den Evangelischen Gheest <rhyme label="b" type="m">ootmoet</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Wilt alle Gheesten niet <rhyme label="a" type="f" corresp="#s2:l1">ghelooven</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Proeft eerst of sy wt Godt sijn <rhyme label="b" type="m" corresp="#s2:l2">goet</rhyme>:</l>
        <l id="s2:l5" met="4" type="-+">Staet vast op den grondt, der Apostelen <rhyme label="b" type="m" corresp="#s2:l2">voet</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">U Hert van deser Werlt <rhyme label="c" type="m">scheydt</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Unde sijt der doot altijt <rhyme label="c" type="m" corresp="#s2:l6">bereydt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Sijt ghy mit Christo recht <rhyme label="a" type="f">ghestorven</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Soo soeckt alleene dat boven <rhyme label="b" type="m">is</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Niet dat aertsche, t'werdt al <rhyme label="a" type="f" corresp="#s3:l1">bedorven</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Een eewich goet dat sijn beloven <rhyme label="b" type="m" corresp="#s3:l2">is</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Die hier ter Werlt verschoven <rhyme label="b" type="m" corresp="#s3:l2">is</rhyme>:</l>
        <l id="s3:l6" met="4" type="-+">Dus sijt verstandich, werdt niet <rhyme label="c" type="m">verleydt</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Unde sijt ter doot altijt <rhyme label="c" type="m" corresp="#s3:l6">bereydt</rhyme>:</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">U hert set niet op langh' te <rhyme label="a" type="f">leven</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Die boosheydt u hert niet sneven <rhyme label="b" type="m">laet</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Wilt u vry tot druck und' lyden <rhyme label="a" type="f" corresp="#s4:l1">gheven</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Daer deurmen tot Godts Rijck verheven <rhyme label="b" type="m" corresp="#s4:l2">gaet</rhyme>:</l>
        <l id="s4:l5" met="4" type="-+">Weest patientich, vliet dit leven <rhyme label="b" type="m" corresp="#s4:l2">quaet</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Wandelt int Licht sonder <rhyme label="c" type="m">verbeydt</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Unde sijt ter doot altijt <rhyme label="c" type="m" corresp="#s4:l6">bereydt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Het sijn nu recht periculoose <rhyme label="a" type="f">tyden</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Daer d'Wtvercoren Godts in sorghen <rhyme label="b" type="m">staen</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Maer Godt sal voor haer wettelijck <rhyme label="a" type="f" corresp="#s5:l1">stryden</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Haer Daghen vercorten na sijn <rhyme label="b" type="m" corresp="#s5:l2">vermaen</rhyme>:</l>
        <l id="s5:l5" met="4" type="-+">Wilt die disciplijn vrolijck <rhyme label="b" type="m" corresp="#s5:l2">ontfaen</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Want Godt die straft der hem <rhyme label="c" type="m">ghereydt</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Unde sijt ter doot altijt <rhyme label="c" type="m" corresp="#s5:l6">bereydt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Alle Godtsalighen moeten <rhyme label="a" type="f">drincken</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Wt den Kelck der bitterheyt den klaren Wijn <rhyme label="b" type="m">root</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">Maer den gist sal Godt den Godtloosen <rhyme label="a" type="f" corresp="#s6:l1">schincken</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Dat sy spyen, braecken unde vallen totten eewigen <rhyme label="b" type="m" corresp="#s6:l2">doot</rhyme>:</l>
        <l id="s6:l5" met="4" type="-+">Dattet verstandt O Christen <rhyme label="b" type="m" corresp="#s6:l2">minjoot</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Den grondt holdt vast, Godts eer <rhyme label="c" type="m">verbreydt</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Unde sijt ter doot altijt <rhyme label="c" type="m" corresp="#s6:l6">bereydt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Siet aen u Prins, u Coninck <rhyme label="a" type="f">ghepresen</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Die sonder sonde was <rhyme label="b" type="m">onbevleckt</rhyme>:</l>
        <l id="s7:l3" met="4" type="-+">Als een Verleyder is hy <rhyme label="a" type="f" corresp="#s7:l1">verwesen</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Mitten boosen ghestraft, aent Cruys <rhyme label="b" type="m" corresp="#s7:l2">ghereckt</rhyme>.</l>
        <l id="s7:l5" met="4" type="-+">O traghe Mensch wert nu <rhyme label="b" type="m" corresp="#s7:l2">ontweckt</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Volcht Christum na in <rhyme label="c" type="m">gherechticheydt</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">Unde sijt ter doot altijt <rhyme label="c" type="m" corresp="#s7:l6">bereydt</rhyme>,</l>
      </lg>
    </lg>
  </text>
</song>

      <category translation="religion">godsdienst</category>
    </categories>
  <author>Johan Fruytiers</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">DE propheet <rhyme label="a" type="m">Samuel</rhyme>//</l>
        <l id="s1:l2" met="3" type="-+">die volghde Gods <rhyme label="a" type="m" corresp="#s1:l1">beuel</rhyme>//</l>
        <l id="s1:l3" met="3" type="-+">Na recht sachmen hem <rhyme label="b" type="f">dorsten</rhyme>//</l>
        <l id="s1:l4" met="3" type="-+">Godt heeft hem seer <rhyme label="c" type="m">bemint</rhyme>//</l>
        <l id="s1:l5" met="3" type="-+">Tconinckrijck hy <rhyme label="c" type="m" corresp="#s1:l4">beghint</rhyme>//</l>
        <l id="s1:l6" met="3" type="-+">Hy salfde hier de <rhyme label="b" type="f" corresp="#s1:l3">Vorsten</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Het volck sondich <rhyme label="a" type="m">besmet</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Rechte hy na Godts <rhyme label="a" type="m" corresp="#s2:l1">wet</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Godt wou op Jacob <rhyme label="b" type="f">mercken</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Hy was een ghetrou <rhyme label="c" type="m">knecht</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Bevonden seer <rhyme label="c" type="m" corresp="#s2:l4">oprecht</rhyme></l>
        <l id="s2:l6" met="3" type="-+">In alle sijne <rhyme label="b" type="f" corresp="#s2:l3">wercken</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Men kende <rhyme label="a" type="m">openbaer</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Sijn prophetie <rhyme label="a" type="m" corresp="#s3:l1">waer</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Hy aenriep Godt <rhyme label="b" type="f">almachtich</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Sijn vianden <rhyme label="c" type="m">verflaut</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Deur Godt werden <rhyme label="c" type="m" corresp="#s3:l4">benaut</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Hy was offer <rhyme label="b" type="f" corresp="#s3:l3">deelachtich</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Van bouen sondt Godt <rhyme label="a" type="m">neer</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Den donder en <rhyme label="a" type="m" corresp="#s4:l1">onweer</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Daer in liet hy hem <rhyme label="b" type="f">hooren</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">De Vorsten hy <rhyme label="c" type="m">verslaet</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">De Philisteen <rhyme label="c" type="m" corresp="#s4:l4">quaet</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Tyro sachmen <rhyme label="b" type="f" corresp="#s4:l3">versmooren</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Eer hy sterf: (tot een <rhyme label="a" type="m">leer</rhyme>}</l>
        <l id="s5:l2" met="3" type="-+">Betuyght hy voor den <rhyme label="a" type="m" corresp="#s5:l1">Heer</rhyme></l>
        <l id="s5:l3" met="3" type="-+">En sijn ghesalfde <rhyme label="b" type="f">reijne</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Dat hem en is <rhyme label="c" type="m">ghetelt</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Van gheenen menschen <rhyme label="c" type="m" corresp="#s5:l4">ghelt</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Ja niet een schoe nam hoe <rhyme label="b" type="f" corresp="#s5:l3">cleijne</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Na dat hy hier <rhyme label="a" type="m">ontsliep</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Wt aertrijck hy weer <rhyme label="a" type="m" corresp="#s6:l1">riep</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">En seyde wat sou <rhyme label="b" type="f">gheschieden</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Oock maecte hy <rhyme label="c" type="m">bekent</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Hoe nemen sou een <rhyme label="c" type="m" corresp="#s6:l4">ent</rhyme></l>
        <l id="s6:l6" met="3" type="-+">De Coningh, en boose <rhyme label="b" type="f" corresp="#s6:l3">lieden</rhyme>.</l>
      </lg>
    </lg>
  </text>

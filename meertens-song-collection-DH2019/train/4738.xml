  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">VErgeefs beromt zich <rhyme label="a" type="m">van</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Verdiensten, eenig <rhyme label="a" type="m" corresp="#s1:l1">man</rhyme>:</l>
        <l id="s1:l3" met="2" type="-+">Die wes hy <rhyme label="b" type="m">doet</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Hem nommen <rhyme label="b" type="m" corresp="#s1:l3">moet</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Met meer als <rhyme label="c" type="m">recht</rhyme>.</l>
        <l id="s1:l6" met="2" type="-+">Een Leusich <rhyme label="c" type="m" corresp="#s1:l5">knecht</rhyme>.</l>
        <l id="s1:l7" met="2" type="-+">Wat handel// wat <rhyme label="d" type="f">wandel</rhyme></l>
        <l id="s1:l8" met="2" type="-+">Wat daed// wat <rhyme label="e" type="m">laet</rhyme></l>
        <l id="s1:l9" met="3" type="+-">Zal dan ons stout <rhyme label="f" type="m">verwaen</rhyme></l>
        <l id="s1:l10" met="2" type="-+">Met leugen// <rhyme label="g" type="f">vermeugen</rhyme></l>
        <l id="s1:l11" met="2" type="-+">Te achten, <rhyme label="h" type="m">als</rhyme></l>
        <l id="s1:l12" met="3" type="-+">Een werk om loon <rhyme label="f" type="m" corresp="#s1:l9">gedaen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Verdienst, en is geen <rhyme label="a" type="m">rom</rhyme>;</l>
        <l id="s2:l2" met="3" type="-+">Maer wel een schone <rhyme label="a" type="m" corresp="#s2:l1">blom</rhyme></l>
        <l id="s2:l3" met="2" type="-+">Des Christen <rhyme label="b" type="m">Kerks</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">Tot lof des <rhyme label="b" type="m" corresp="#s2:l3">werks</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">’t Welk uit het <rhyme label="c" type="m">zaed</rhyme></l>
        <l id="s2:l6" met="2" type="-+">Van Goods <rhyme label="c" type="m" corresp="#s2:l5">genaed</rhyme></l>
        <l id="s2:l7" met="2" type="-+">Gesproten// haer <rhyme label="d" type="f">loten</rhyme></l>
        <l id="s2:l8" met="2" type="-+">Om hoog// nae ’t <rhyme label="e" type="m">oog</rhyme></l>
        <l id="s2:l9" met="3" type="+-">Van haer beminde <rhyme label="f" type="m">stierd</rhyme>.</l>
        <l id="s2:l10" met="2" type="-+">Diet weder// wel <rhyme label="g" type="f">teder</rhyme></l>
        <l id="s2:l11" met="2" type="-+">Van liefd’ <rhyme label="h" type="m">ontfangt</rhyme></l>
        <l id="s2:l12" met="3" type="-+">En met zijn goud <rhyme label="f" type="m" corresp="#s2:l9">versierdt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">’t Is waer wy sijn <rhyme label="a" type="m">onnut</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Zoo lang wy niet <rhyme label="a" type="m" corresp="#s3:l1">gestut</rhyme></l>
        <l id="s3:l3" met="2" type="-+">En werden <rhyme label="b" type="m">deur</rhyme></l>
        <l id="s3:l4" met="2" type="-+">De hoge <rhyme label="b" type="m" corresp="#s3:l3">keur</rhyme></l>
        <l id="s3:l5" met="2" type="-+">Van ’t Godlijk <rhyme label="c" type="m">goed</rhyme>;</l>
        <l id="s3:l6" met="2" type="-+">’t Welk vleesch en <rhyme label="c" type="m" corresp="#s3:l5">bloed</rhyme></l>
        <l id="s3:l7" met="2" type="-+">Het leven// doed <rhyme label="d" type="f">geven</rhyme>.</l>
        <l id="s3:l8" met="2" type="-+">Waer deurt// op <rhyme label="e" type="m">beurt</rhyme></l>
        <l id="s3:l9" met="3" type="+-">Zijn zwaer gewigt nae <rhyme label="f" type="m">God</rhyme>.</l>
        <l id="s3:l10" met="2" type="-+">Wiens waerde// van <rhyme label="g" type="f">d’aerde</rhyme></l>
        <l id="s3:l11" met="2" type="-+">Der menschen <rhyme label="h" type="m">doch</rhyme>,</l>
        <l id="s3:l12" met="3" type="-+">Kan krijgen geen <rhyme label="f" type="m" corresp="#s3:l9">genot</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Maer efter heeft het <rhyme label="a" type="m">goed</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Gedacht, de volste <rhyme label="a" type="m" corresp="#s4:l1">vloed</rhyme></l>
        <l id="s4:l3" met="2" type="-+">Van Goods <rhyme label="b" type="m">genae</rhyme>;</l>
        <l id="s4:l4" met="2" type="-+">Om vroug en <rhyme label="b" type="m" corresp="#s4:l3">spae</rhyme></l>
        <l id="s4:l5" met="2" type="-+">Te roupen <rhyme label="c" type="m">in</rhyme></l>
        <l id="s4:l6" met="2" type="-+">Zijn <rhyme label="c" type="m" corresp="#s4:l5">huysgezin</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">Nae rede// en <rhyme label="d" type="f">zeden</rhyme></l>
        <l id="s4:l8" met="2" type="-+">Eens mans// die ’s <rhyme label="e" type="m">lands</rhyme></l>
        <l id="s4:l9" met="3" type="+-">Gebou om geld <rhyme label="f" type="m">besteet</rhyme>:</l>
        <l id="s4:l10" met="2" type="-+">Tot loonen// van <rhyme label="g" type="f">kronen</rhyme>,</l>
        <l id="s4:l11" met="2" type="-+">Als ’t werk af <rhyme label="h" type="m">is</rhyme>,</l>
        <l id="s4:l12" met="3" type="-+">Te geven, wel <rhyme label="f" type="m" corresp="#s4:l9">gereed</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Des zal zijn hoog <rhyme label="a" type="m">gerecht</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Eens zeggen: goede <rhyme label="a" type="m" corresp="#s5:l1">knecht</rhyme>!</l>
        <l id="s5:l3" met="2" type="-+">Nae dien uw’ <rhyme label="b" type="m">trou</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">Mijn kleynen <rhyme label="b" type="m" corresp="#s5:l3">Bou</rhyme></l>
        <l id="s5:l5" met="2" type="-+">Wel heeft <rhyme label="c" type="m">bestierdt</rhyme>;</l>
        <l id="s5:l6" met="2" type="-+">Zoo komt, en <rhyme label="c" type="m" corresp="#s5:l5">vierdt</rhyme></l>
        <l id="s5:l7" met="2" type="-+">De rusten// en <rhyme label="d" type="f">lusten</rhyme></l>
        <l id="s5:l8" met="2" type="-+">Die ‘k u// van <rhyme label="e" type="m">nu</rhyme></l>
        <l id="s5:l9" met="3" type="+-">Tot allen eeuwen <rhyme label="f" type="m">schenk</rhyme>.</l>
        <l id="s5:l10" met="2" type="-+">O minne!// mijn <rhyme label="g" type="f">zinnen</rhyme></l>
        <l id="s5:l11" met="2" type="-+">Ontbreken, <rhyme label="h" type="m">als</rhyme></l>
        <l id="s5:l12" met="3" type="-+">Ik op uw’ mildheyd <rhyme label="f" type="m" corresp="#s5:l9">denk</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Neemt dan ene blijde <rhyme label="a" type="m">moed</rhyme>;</l>
        <l id="s6:l2" met="3" type="-+">Als ghy wat lijd, of <rhyme label="a" type="m" corresp="#s6:l1">doed</rhyme></l>
        <l id="s6:l3" met="2" type="-+">Voor Godes <rhyme label="b" type="m">zoon</rhyme>.</l>
        <l id="s6:l4" met="2" type="-+">Want ziet uw’ <rhyme label="b" type="m" corresp="#s6:l3">loon</rhyme></l>
        <l id="s6:l5" met="2" type="-+">Is zonder <rhyme label="c" type="m">end</rhyme>,</l>
        <l id="s6:l6" met="2" type="-+">In ’s Hemels <rhyme label="c" type="m" corresp="#s6:l5">tend</rhyme>.</l>
        <l id="s6:l7" met="2" type="-+">Geprezen// moet <rhyme label="d" type="f">wezen</rhyme></l>
        <l id="s6:l8" met="2" type="-+">De gunst// en <rhyme label="e" type="m">kunst</rhyme></l>
        <l id="s6:l9" met="3" type="+-">Des Heren, wiens <rhyme label="f" type="m">verding</rhyme></l>
        <l id="s6:l10" met="2" type="-+">Goed aerdig// wel <rhyme label="g" type="f">waerdig</rhyme></l>
        <l id="s6:l11" met="2" type="-+">Den Hemel maken <rhyme label="h" type="m">kan</rhyme></l>
        <l id="s6:l12" met="3" type="-+">Een stof zoo <rhyme label="f" type="m" corresp="#s6:l9">g’ring</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Want wesmen doed, of <rhyme label="a" type="m">lijd</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">In dezen korten <rhyme label="a" type="m" corresp="#s7:l1">tijd</rhyme>;</l>
        <l id="s7:l3" met="2" type="-+">En heeft noch <rhyme label="b" type="m">maet</rhyme>,</l>
        <l id="s7:l4" met="2" type="-+">Noch stand, noch <rhyme label="b" type="m" corresp="#s7:l3">staet</rhyme>,</l>
        <l id="s7:l5" met="2" type="-+">Op ’t rijk <rhyme label="c" type="m">juweel</rhyme></l>
        <l id="s7:l6" met="2" type="-+">Van ’t beste <rhyme label="c" type="m" corresp="#s7:l5">deel</rhyme>.</l>
        <l id="s7:l7" met="2" type="-+">Maer spruiten// die <rhyme label="d" type="f">uitte</rhyme></l>
        <l id="s7:l8" met="2" type="-+">Genaed// als <rhyme label="e" type="m">zaed</rhyme></l>
        <l id="s7:l9" met="3" type="+-">Voortkomen; vanden <rhyme label="f" type="m">Heer</rhyme></l>
        <l id="s7:l10" met="2" type="-+">Memory// van <rhyme label="g" type="f">glory</rhyme></l>
        <l id="s7:l11" met="2" type="-+">Verdienen: <rhyme label="h" type="m">nae’t</rhyme></l>
        <l id="s7:l12" met="3" type="-+">Bescheyd van Christus <rhyme label="f" type="m" corresp="#s7:l9">leer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>21389</id>
    <date>
      <year-start>1591</year-start>
      <year-end>1592</year-end>
    </date>
    <tags>
      <tag standard-name="schriftuurlijk lied" translation="scripture song">schriftuurlijk lied</tag>
      <tag standard-name="vermaanlied" translation="admonitory song">vermaanlied</tag>
    </tags>
    <melody>Haar borstjes in haar boezem</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Soetken Gerijts</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">OCh vrienden al te <rhyme label="a" type="f">samen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Ghy die daer vreest den <rhyme label="b" type="m">Heer</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Laet ons toch Christum niet <rhyme label="a" type="f" corresp="#s1:l1">schamen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Oft hy soude ons schamen <rhyme label="b" type="m" corresp="#s1:l2">weer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">En laet ons toch niet <rhyme label="a" type="f">vresen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Die tlichaem dooden <rhyme label="b" type="m">hier</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Maer hem, die de siele <rhyme label="a" type="f" corresp="#s2:l1">ghepresen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Mach worpen int eeuwighe <rhyme label="b" type="m" corresp="#s2:l2">vier</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Smenschen handen mogen wy <rhyme label="a" type="f">ontulien</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Maer Godts hant niet <rhyme label="b" type="m">ontgaen</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Dus laet ons hem alleen <rhyme label="a" type="f" corresp="#s3:l1">ontsien</rhyme></l>
        <l id="s3:l4" met="3" type="-+">En doen dat hy wil hebben <rhyme label="b" type="m" corresp="#s3:l2">ghedaen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Al die Godtsalich willen <rhyme label="a" type="f">leuen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">In Christo Jesu, het is <rhyme label="b" type="m">waer</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Die moeten worden <rhyme label="a" type="f" corresp="#s4:l1">verdreuen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Veruolcht, seyt Paulus <rhyme label="b" type="m" corresp="#s4:l2">openbaer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Esaias seyt daer en <rhyme label="a" type="f">bouen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Wie van zijn quade wegen <rhyme label="b" type="m">afkeert</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Die moeten zijn allemans <rhyme label="a" type="f" corresp="#s5:l1">roouen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Gods volc moet hier zijn <rhyme label="b" type="m" corresp="#s5:l2">gepersequeert</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">De rechtueerdige moet veel <rhyme label="a" type="f">lijden</rhyme></l>
        <l id="s6:l2" met="3" type="-+">So de Schriftuere <rhyme label="b" type="m">vermelt</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Het coemt van alle <rhyme label="a" type="f" corresp="#s6:l1">zijden</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Dat de Christenen worden <rhyme label="b" type="m" corresp="#s6:l2">ghequelt</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Verbeyt met <rhyme label="a" type="f">lijtsamicheden</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Des Heer en dach coemt <rhyme label="b" type="m">aen</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Dan sullen de rechtueerdige, hoort <rhyme label="a" type="f" corresp="#s7:l1">reden</rhyme></l>
        <l id="s7:l4" met="3" type="-+">In grooter volstandicheyt <rhyme label="b" type="m" corresp="#s7:l2">staen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Laet ons doch daer op <rhyme label="a" type="f">hoopen</rhyme></l>
        <l id="s8:l2" met="3" type="-+">En verwachten met <rhyme label="b" type="m">lijtsaemheyt</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Den camp volherdich <rhyme label="a" type="f" corresp="#s8:l1">loopen</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Die ons is <rhyme label="b" type="m" corresp="#s8:l2">voorgheleyt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Och vrienden liefste <rhyme label="a" type="f">ghepresen</rhyme></l>
        <l id="s9:l2" met="3" type="-+">De vrede Gods moet ons blijuen <rhyme label="b" type="m">by</rhyme></l>
        <l id="s9:l3" met="3" type="-+">My dunct, het moet ghescheyden <rhyme label="a" type="f" corresp="#s9:l1">wesen</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Och lieue, bidt toch hertelijck voor <rhyme label="b" type="m" corresp="#s9:l2">my</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Op Zaturdag en <rhyme label="a" type="f">avond</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">Ging ik op de <rhyme label="b" type="m">straet</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Hoorden ik zotte <rhyme label="c" type="f">grillen</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">Dieze koopen <rhyme label="c" type="f" corresp="#s1:l3">willen</rhyme>:</l>
        <l id="s1:l5" met="4" type="+-">Hoord eens hoe den handel <rhyme label="b" type="m" corresp="#s1:l2">gaet</rhyme>?</l>
        <l id="s1:l6" met="5" type="-+">De wereld is vol twisten en <rhyme label="c" type="f" corresp="#s1:l3">verschillen</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Wanneer het zottekens spel <rhyme label="d" type="m">begint</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">Zoo dat een Moeder vermaant haer <rhyme label="d" type="m" corresp="#s1:l7">kind</rhyme></l>
        <l id="s1:l9" met="5" type="-+">Om dat zy haer het minnen wil <rhyme label="e" type="f">ontdraeijen</rhyme></l>
        <l id="s1:l10" met="3" type="-+">En die het is van <rhyme label="f" type="m">zin</rhyme>,</l>
        <l id="s1:l11" met="3" type="+-">De vonken van de <rhyme label="f" type="m" corresp="#s1:l10">min</rhyme>,</l>
        <l id="s1:l12" met="5" type="-+">Zy zal tot spyt en leet haer Moeder <rhyme label="e" type="f" corresp="#s1:l9">paeijen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Gaet de Moeder <rhyme label="a" type="f">gryzen</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">Voor de Dogter <rhyme label="b" type="m">dan</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Zeggen tot een <rhyme label="c" type="f">reeden</rhyme></l>
        <l id="s2:l4" met="3" type="+-">Dat zyn <rhyme label="c" type="f" corresp="#s2:l3">slegtigheeden</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Moeder en spreekt myn daer niet <rhyme label="b" type="m" corresp="#s2:l2">van</rhyme>,</l>
        <l id="s2:l6" met="5" type="-+">De jonkheid die word gaerne eens <rhyme label="c" type="f" corresp="#s2:l3">gevreden</rhyme></l>
        <l id="s2:l7" met="4" type="-+">Myn kloris, een aerdige <rhyme label="d" type="m">dief</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">Ik heb hem <rhyme label="d" type="m" corresp="#s2:l7">lief</rhyme>,</l>
        <l id="s2:l9" met="5" type="-+">Wy hebben over lange tyd <rhyme label="e" type="f">gesprooken</rhyme>,</l>
        <l id="s2:l10" met="3" type="-+">'t Is een braeve <rhyme label="f" type="m">gast</rhyme>,</l>
        <l id="s2:l11" met="3" type="+-">Hy heeft het myn <rhyme label="f" type="m" corresp="#s2:l10">belast</rhyme>;</l>
        <l id="s2:l12" met="5" type="-+">Hy zal myn kap of trekmuts niet <rhyme label="e" type="f" corresp="#s2:l9">verkrooken</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Dogter wild u <rhyme label="a" type="f">schaemen</rhyme>,</l>
        <l id="s3:l2" met="3" type="+-">Zoud gy dit <rhyme label="b" type="m">bestaen</rhyme>?</l>
        <l id="s3:l3" met="3" type="-+">Met de jonkmans <rhyme label="c" type="f">zwieren</rhyme>?</l>
        <l id="s3:l4" met="3" type="+-">Dat zyn geen <rhyme label="c" type="f" corresp="#s3:l3">manieren</rhyme>;</l>
        <l id="s3:l5" met="4" type="+-">Moeder gy hebt het myn voor <rhyme label="b" type="m" corresp="#s3:l2">gedaen</rhyme>;</l>
        <l id="s3:l6" met="5" type="-+">Waerom wild gy kyven ende <rhyme label="c" type="f" corresp="#s3:l3">tieren</rhyme>?</l>
        <l id="s3:l7" met="4" type="-+">Weet gy te zeggen gy stoute <rhyme label="d" type="m">pry</rhyme></l>
        <l id="s3:l8" met="4" type="-+">Iets dat onredelyk is aen <rhyme label="d" type="m" corresp="#s3:l7">my</rhyme>?</l>
        <l id="s3:l9" met="5" type="-+">Wel Moeder ik mag u niet <rhyme label="e" type="f">verwyten</rhyme>,</l>
        <l id="s3:l10" met="3" type="-+">Maer ik niet en <rhyme label="f" type="m">wist</rhyme>,</l>
        <l id="s3:l11" met="3" type="+-">Dat gy u hebt <rhyme label="f" type="m" corresp="#s3:l10">vergist</rhyme>,</l>
        <l id="s3:l12" met="5" type="-+">'t En zou my voor den drommel zo niet <rhyme label="e" type="f" corresp="#s3:l9">spyten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Dogter wild <rhyme label="a" type="f">gelooven</rhyme></l>
        <l id="s4:l2" met="3" type="+-">Dat gy door de <rhyme label="b" type="m">trouw</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Alles zult <rhyme label="c" type="f">bezuuren</rhyme>,</l>
        <l id="s4:l4" met="3" type="+-">Door u tong te <rhyme label="c" type="f" corresp="#s4:l3">roeren</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Ach lieve Moeder ik zeg 't <rhyme label="b" type="m" corresp="#s4:l2">nou</rhyme></l>
        <l id="s4:l6" met="5" type="-+">'t En zal geen zeven jaer meer <rhyme label="c" type="f" corresp="#s4:l3">duuren</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Al dat gy aen u Ouders <rhyme label="d" type="m">doet</rhyme>,</l>
        <l id="s4:l8" met="4" type="-+">Aen de Man betaelen <rhyme label="d" type="m" corresp="#s4:l7">moet</rhyme>,</l>
        <l id="s4:l9" met="5" type="-+">Dat zal myn lieve Moeder niet <rhyme label="e" type="f">verdrieten</rhyme>,</l>
        <l id="s4:l10" met="3" type="-+">Ik kreeg nog liever <rhyme label="f" type="m">tol</rhyme></l>
        <l id="s4:l11" met="3" type="+-">Als altyd u <rhyme label="f" type="m" corresp="#s4:l10">gegrol</rhyme>!</l>
        <l id="s4:l12" met="5" type="-+">Ik zal zoo meenig troost van hem <rhyme label="e" type="f" corresp="#s4:l9">genieten</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Als gy dan wild <rhyme label="a" type="f">trouwen</rhyme>,</l>
        <l id="s5:l2" met="3" type="+-">Magt na uw <rhyme label="b" type="m">staet</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Die u kan <rhyme label="c" type="f">monteeren</rhyme>,</l>
        <l id="s5:l4" met="3" type="+-">En u <rhyme label="c" type="f" corresp="#s5:l3">minteneeren</rhyme>;</l>
        <l id="s5:l5" met="4" type="+-">Moeder als 't myn eens gebeuren <rhyme label="b" type="m" corresp="#s5:l2">mag</rhyme>,</l>
        <l id="s5:l6" met="5" type="-+">'k En zou daer geen droogen voor <rhyme label="c" type="f" corresp="#s5:l3">begeeren</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Eenen die in myn zinnen <rhyme label="d" type="m">staet</rhyme>,</l>
        <l id="s5:l8" met="4" type="-+">Of het wel of kwalyk <rhyme label="d" type="m" corresp="#s5:l7">gaet</rhyme>,</l>
        <l id="s5:l9" met="5" type="-+">Ik zal het lieve Moeder u niet <rhyme label="e" type="f">klaegen</rhyme>!</l>
        <l id="s5:l10" met="3" type="-+">Als vreugde en <rhyme label="f" type="m">verdriet</rhyme>!</l>
        <l id="s5:l11" met="3" type="+-">My dag en nagt <rhyme label="f" type="m" corresp="#s5:l10">geschied</rhyme>,</l>
        <l id="s5:l12" met="5" type="-+">Al kreeg ik dan myn huid vol <rhyme label="e" type="f" corresp="#s5:l9">slaegen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Denkt eens lieve <rhyme label="a" type="f">Dogter</rhyme>,</l>
        <l id="s6:l2" met="3" type="+-">Waer dat myn geen <rhyme label="b" type="m">pyn</rhyme>?</l>
        <l id="s6:l3" met="3" type="-+">Dat ik u zag <rhyme label="c" type="f">moeijen</rhyme>,</l>
        <l id="s6:l4" met="3" type="+-">In de trouw <rhyme label="c" type="f" corresp="#s6:l3">verfoeijen</rhyme>!</l>
        <l id="s6:l5" met="4" type="+-">Moeder als ik eens getrouwd zal <rhyme label="b" type="m" corresp="#s6:l2">zyn</rhyme>,</l>
        <l id="s6:l6" met="5" type="-+">Gy moogt met 't Huwelyk niet <rhyme label="c" type="f" corresp="#s6:l3">moeijen</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Dogter gy weet niet hoe 't <rhyme label="d" type="m">gaet</rhyme>,</l>
        <l id="s6:l8" met="4" type="-+">Meenig een man is zoo voos en zoo <rhyme label="d" type="m" corresp="#s6:l7">kwaed</rhyme>;</l>
        <l id="s6:l9" met="5" type="-+">Ia Moeder ik heb Vader hooren <rhyme label="e" type="f">kyven</rhyme>,</l>
        <l id="s6:l10" met="3" type="-+">Hy was wat <rhyme label="f" type="m">ongedult</rhyme>:</l>
        <l id="s6:l11" met="3" type="+-">Maer het was jou eigen <rhyme label="f" type="m" corresp="#s6:l10">schult</rhyme>!</l>
        <l id="s6:l12" met="5" type="-+">Zoo gaat het meestendeeel met al de <rhyme label="e" type="f" corresp="#s6:l9">Wyven</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Ach myn lieve <rhyme label="a" type="f">Dogter</rhyme></l>
        <l id="s7:l2" met="3" type="+-">Blyft nog wat <rhyme label="b" type="m">alleen</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Wild het nimmer <rhyme label="c" type="f">schouwen</rhyme></l>
        <l id="s7:l4" met="3" type="+-">Het zal u <rhyme label="c" type="f" corresp="#s7:l3">berouwen</rhyme>;</l>
        <l id="s7:l5" met="4" type="+-">Ben ik niet van louter vlees en <rhyme label="b" type="m" corresp="#s7:l2">been</rhyme>,</l>
        <l id="s7:l6" met="5" type="-+">Gelyk me moeder kwam te <rhyme label="c" type="f" corresp="#s7:l3">trouwen</rhyme>?</l>
        <l id="s7:l7" met="4" type="-+">Heb ik 't niet lang <rhyme label="d" type="m">gezeid</rhyme>,</l>
        <l id="s7:l8" met="4" type="-+">Dat in het Huwelyk is veel <rhyme label="d" type="m" corresp="#s7:l7">stryd</rhyme>,</l>
        <l id="s7:l9" met="5" type="-+">Wel moeder is 't plyzier u dan <rhyme label="e" type="f">vergeeten</rhyme>,</l>
        <l id="s7:l10" met="3" type="-+">Spreekt gy daer niet <rhyme label="f" type="m">van</rhyme>,</l>
        <l id="s7:l11" met="3" type="+-">Als ik maer trouwen <rhyme label="f" type="m" corresp="#s7:l10">kan</rhyme>;</l>
        <l id="s7:l12" met="5" type="-+">Dan zal ik goed en kwaed te zamen <rhyme label="e" type="f" corresp="#s7:l9">weeten</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Vader wild eens <rhyme label="a" type="f">proeven</rhyme></l>
        <l id="s8:l2" met="3" type="+-">Hoe den Appel <rhyme label="b" type="m">smaekt</rhyme>?</l>
        <l id="s8:l3" met="3" type="-+">Ouders om te <rhyme label="c" type="f">fluyten</rhyme>,</l>
        <l id="s8:l4" met="3" type="+-">Zyt hier te <rhyme label="c" type="f" corresp="#s8:l3">buyten</rhyme>;</l>
        <l id="s8:l5" met="4" type="+-">Want zoe de min de jonkheid heeft <rhyme label="b" type="m" corresp="#s8:l2">geraekt</rhyme>,</l>
        <l id="s8:l6" met="5" type="-+">Dan is 't verlooren <rhyme label="c" type="f" corresp="#s8:l3">fluyten</rhyme>,</l>
        <l id="s8:l7" met="4" type="-+">Zaer die zoekt Gords en Gords die zoekt <rhyme label="d" type="m">Zaer</rhyme></l>
        <l id="s8:l8" met="4" type="-+">Zot en Zottin een fraey <rhyme label="d" type="m" corresp="#s8:l7">paer</rhyme>,</l>
        <l id="s8:l9" met="5" type="-+">men kan geen regte liefde <rhyme label="e" type="f">wederhouden</rhyme>;</l>
        <l id="s8:l10" met="3" type="-+">'t Is verlooren <rhyme label="f" type="m">moet</rhyme>,</l>
        <l id="s8:l11" met="3" type="+-">Ouders wat gy <rhyme label="f" type="m" corresp="#s8:l10">doet</rhyme>,</l>
        <l id="s8:l12" met="5" type="-+">Adieu mameer u Dogter die gaet <rhyme label="e" type="f" corresp="#s8:l9">trouwen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

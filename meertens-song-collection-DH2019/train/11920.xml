    <melody>Wilt gij de Heer der Heren</melody>
    <categories>
      <category translation="formal genres">formele genres</category>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Cornelis de Leeuw</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">WIlt ghy den Heer der <rhyme label="a" type="f">Heeren</rhyme></l>
        <l id="s1:l2" met="3" type="-+">2. Gehoorsaem zijn, ghy set- <rhyme label="b" type="f">ten</rhyme></l>
        <l id="s1:l3" met="3" type="-+">3. V hert moet op sijn <rhyme label="b" type="f" corresp="#s1:l2">wetten</rhyme>:</l>
        <l id="s1:l4" met="3" type="-+">4. En vol-gen sijn <rhyme label="a" type="f" corresp="#s1:l1">begeeren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">God heeft een groot <rhyme label="a" type="f">behaghen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">In die, wiens hert en <rhyme label="b" type="f">sinnen</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Hem suyverlijck <rhyme label="b" type="f" corresp="#s2:l2">beminnen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En na sijn wil haar <rhyme label="a" type="f" corresp="#s2:l1">draghen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Die niet om menschen <rhyme label="a" type="f">eere</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Of Weereltsche <rhyme label="b" type="f">insichten</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Haer ganghen na God <rhyme label="b" type="f" corresp="#s3:l2">richten</rhyme>:</l>
        <l id="s3:l4" met="3" type="-+">Maer om Gods wil <rhyme label="a" type="f" corresp="#s3:l1">bekeeren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Die van haer deughdigh <rhyme label="a" type="f">leeven</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Gheen loon by menschen <rhyme label="b" type="f">hoopen</rhyme>;</l>
        <l id="s4:l3" met="3" type="-+">Maar in deuchts-loopbaan <rhyme label="b" type="f" corresp="#s4:l2">loopen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Om t'heyl dat God sal <rhyme label="a" type="f" corresp="#s4:l1">gheven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Die God soo hert'lijck <rhyme label="a" type="f">vreesen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Als of de Heer sijn <rhyme label="b" type="f">ooghen</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Tot haer hiel <rhyme label="b" type="f" corresp="#s5:l2">opghetooghen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Alleen, in haar <rhyme label="a" type="f" corresp="#s5:l1">by-wesen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Die haer ghestadighe <rhyme label="a" type="f">wachten</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Soo vlijtigh voor de <rhyme label="b" type="f">sonden</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Dat by haer niet <rhyme label="b" type="f" corresp="#s6:l2">ghevonden</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Wert, datmen quaet mach <rhyme label="a" type="f" corresp="#s6:l1">achten</rhyme>:</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Die nu en t' allen <rhyme label="a" type="f">tijden</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Soo 's Heeren woort <rhyme label="b" type="f">betrachten</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Dat sy in haer <rhyme label="b" type="f" corresp="#s7:l2">ghedachten</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Selfs niet in't quaet <rhyme label="a" type="f" corresp="#s7:l1">verblijden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Die 's levens wetten <rhyme label="a" type="f">volghen</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">En trouwelijck <rhyme label="b" type="f">belijden</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Schoon dat haer <rhyme label="b" type="f" corresp="#s8:l2">teghenstrijden</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Tyrannen gantsch <rhyme label="a" type="f" corresp="#s8:l1">verbolghen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Die geen dingh <rhyme label="a" type="f">achterlaten</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Om haer volmaeckt te <rhyme label="b" type="f">maecken</rhyme></l>
        <l id="s9:l3" met="3" type="-+">In Goddelijcke <rhyme label="b" type="f" corresp="#s9:l2">saecken</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Al soudt haer hier niet <rhyme label="a" type="f" corresp="#s9:l1">baten</rhyme>:</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Die sonden niet <rhyme label="a" type="f">verschoonen</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Die van haer zijn <rhyme label="b" type="f">bedreven</rhyme>:</l>
        <l id="s10:l3" met="3" type="-+">Maer een volmaeckter <rhyme label="b" type="f" corresp="#s10:l2">leven</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Belooven aan Gods <rhyme label="a" type="f" corresp="#s10:l1">Soone</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Die vanden Heer niet <rhyme label="a" type="f">wijcken</rhyme>;</l>
        <l id="s11:l2" met="3" type="-+">Of hy haar veel <rhyme label="b" type="f">elenden</rhyme></l>
        <l id="s11:l3" met="3" type="-+">Int' leven wil <rhyme label="b" type="f" corresp="#s11:l2">toe-senden</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Die licht'lijck doen <rhyme label="a" type="f" corresp="#s11:l1">beswijcken</rhyme></l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Die niet alleen met <rhyme label="a" type="f">wercken</rhyme></l>
        <l id="s12:l2" met="3" type="-+">En woorden, maar oock <rhyme label="b" type="f">zielen</rhyme></l>
        <l id="s12:l3" met="3" type="-+">Gods wetten <rhyme label="b" type="f" corresp="#s12:l2">onderhielen</rhyme>:</l>
        <l id="s12:l4" met="3" type="-+">En haar in deucht <rhyme label="a" type="f" corresp="#s12:l1">verstercken</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Dit t'licht vans' Heeren <rhyme label="a" type="f">woorden</rhyme></l>
        <l id="s13:l2" met="3" type="-+">Niet vlieden, maar na <rhyme label="b" type="f">jaghen</rhyme></l>
        <l id="s13:l3" met="3" type="-+">Om beter haar te <rhyme label="b" type="f" corresp="#s13:l2">draghen</rhyme></l>
        <l id="s13:l4" met="3" type="-+">Na 'tgheen, sy van God <rhyme label="a" type="f" corresp="#s13:l1">hoorden</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Die soo naaukeurigh <rhyme label="a" type="f">letten</rhyme></l>
        <l id="s14:l2" met="3" type="-+">En achten t'woort des <rhyme label="b" type="f">Heeren</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Dat sy oock doen en <rhyme label="b" type="f" corresp="#s14:l2">eeren</rhyme></l>
        <l id="s14:l4" met="3" type="-+">Gods allerminste <rhyme label="a" type="f" corresp="#s14:l1">wetten</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Die in het goet <rhyme label="a" type="f">volherden</rhyme>,</l>
        <l id="s15:l2" met="3" type="-+">In luck en <rhyme label="b" type="f">teghenheden</rhyme>:</l>
        <l id="s15:l3" met="3" type="-+">En willens noyt <rhyme label="b" type="f" corresp="#s15:l2">misdeden</rhyme>,</l>
        <l id="s15:l4" met="3" type="-+">Tot sy begraven <rhyme label="a" type="f" corresp="#s15:l1">werden</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="3" type="-+">Die boven alle <rhyme label="a" type="f">saaken</rhyme></l>
        <l id="s16:l2" met="3" type="-+">Haar God en Heylant <rhyme label="b" type="f">lieven</rhyme>:</l>
        <l id="s16:l3" met="3" type="-+">Die hen altijt <rhyme label="b" type="f" corresp="#s16:l2">gherieven</rhyme>,</l>
        <l id="s16:l4" met="3" type="-+">En door t'ghebedt haar <rhyme label="a" type="f" corresp="#s16:l1">naaken</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="3" type="-+">Soo ongheveynst moet <rhyme label="a" type="f">yder</rhyme></l>
        <l id="s17:l2" met="3" type="-+">Die erven wil Gods <rhyme label="b" type="f">vreughden</rhyme></l>
        <l id="s17:l3" met="3" type="-+">Bewand'ren t'padt der <rhyme label="b" type="f" corresp="#s17:l2">deughden</rhyme>;</l>
        <l id="s17:l4" met="3" type="-+">En sijn ghelooffs <rhyme label="a" type="f" corresp="#s17:l1">belijder</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="3" type="-+">Waarom? God niet <rhyme label="a" type="f">ghehenghen</rhyme></l>
        <l id="s18:l2" met="3" type="-+">Wil in sijn <rhyme label="b" type="f">Coninckrijcken</rhyme>,</l>
        <l id="s18:l3" met="3" type="-+">Die vroom alleen <rhyme label="b" type="f" corresp="#s18:l2">ghelijcken</rhyme>;</l>
        <l id="s18:l4" met="3" type="-+">En deucht by ondeught <rhyme label="a" type="f" corresp="#s18:l1">menghen</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="3" type="-+">By God en is gheen <rhyme label="a" type="f">duyster</rhyme>:</l>
        <l id="s19:l2" met="3" type="-+">Hy Heyligh is in <rhyme label="b" type="f">allen</rhyme>.</l>
        <l id="s19:l3" met="3" type="-+">Hy heeft gheen <rhyme label="b" type="f" corresp="#s19:l2">wel-ghevallen</rhyme></l>
        <l id="s19:l4" met="3" type="-+">Die haar met schijn <rhyme label="a" type="f" corresp="#s19:l1">vercieren</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="3" type="-+">Al wiens ghemoet oprecht <rhyme label="a" type="f">is</rhyme>,</l>
        <l id="s20:l2" met="3" type="-+">Hier vreught, en na sal <rhyme label="b" type="f">erven</rhyme></l>
        <l id="s20:l3" met="3" type="-+">Een leven sonder <rhyme label="b" type="f" corresp="#s20:l2">sterven</rhyme>:</l>
        <l id="s20:l4" met="3" type="-+">Want dese recht Gods knechts <rhyme label="a" type="f" corresp="#s20:l1">is</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

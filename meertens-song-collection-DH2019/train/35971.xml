  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">SIet hoe wacker als een <rhyme label="a" type="m">vis</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Als die impatientich <rhyme label="a" type="m" corresp="#s1:l1">is</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Spoedt Maria naer het <rhyme label="b" type="m">graf</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Van hare <rhyme label="c" type="f">wel-Beminden</rhyme>!</l>
        <l id="s1:l5" met="4" type="+-">Zy en wert noch moe, noch <rhyme label="b" type="m" corresp="#s1:l3">laf</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Maer wilt, maer sal hem <rhyme label="c" type="f" corresp="#s1:l4">vinden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">My dunckt zy wilt gaen <rhyme label="a" type="m">alleen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Maer daer gaen oock ander <rhyme label="a" type="m" corresp="#s2:l1">heen</rhyme>:</l>
        <l id="s2:l3" met="4" type="+-">Al wert zy maer <rhyme label="b" type="m">uytgedruckt</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">De Schriftuur geeft te <rhyme label="c" type="f">kennen</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Hoe veel een exempel <rhyme label="b" type="m" corresp="#s2:l3">ruckt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Om t'selfde naer te <rhyme label="c" type="f" corresp="#s2:l4">wennen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Ick sien haer vermoeyt, en <rhyme label="a" type="m">bangh</rhyme>:</l>
        <l id="s3:l2" met="4" type="+-">Eenen nacht is haer te <rhyme label="a" type="m" corresp="#s3:l1">langh</rhyme>.</l>
        <l id="s3:l3" met="4" type="+-">Wiens hert, dat oyt soo <rhyme label="b" type="m">joegh</rhyme>?</l>
        <l id="s3:l4" met="3" type="-+">Z'en kan niet <rhyme label="c" type="f">meerverbeyden</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Zy begint van savondts <rhyme label="b" type="m" corresp="#s3:l3">vroegh</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Haer salven te <rhyme label="c" type="f" corresp="#s3:l4">bereyden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Zy staet op, en zy gaet <rhyme label="a" type="m">voor</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Als Princesse vande <rhyme label="a" type="m" corresp="#s4:l1">Choor</rhyme>.</l>
        <l id="s4:l3" met="4" type="+-">Maer Maria op de <rhyme label="b" type="m">wegh</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Syn Ruyters, en <rhyme label="c" type="f">Soldaeten</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">De liefd' jaeght de vreese <rhyme label="b" type="m" corresp="#s4:l3">wegh</rhyme>.</l>
        <l id="s4:l6" met="3" type="-+">Die my doet alle <rhyme label="c" type="f" corresp="#s4:l4">baten</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Nu vrindinnen laet ons <rhyme label="a" type="m">gaen</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">En blyft hier niet langher <rhyme label="a" type="m" corresp="#s5:l1">staen</rhyme>.</l>
        <l id="s5:l3" met="4" type="+-">Kom, kom aen, kom alle <rhyme label="b" type="m">kom</rhyme>.</l>
        <l id="s5:l4" met="3" type="-+">Wie sal de steen <rhyme label="c" type="f">afwenden</rhyme>?</l>
        <l id="s5:l5" met="4" type="+-">Ick en geve daer niet <rhyme label="b" type="m" corresp="#s5:l3">om</rhyme>!</l>
        <l id="s5:l6" met="3" type="-+">Godt sal ons raedt <rhyme label="c" type="f" corresp="#s5:l4">toesenden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Zy komt tot die open <rhyme label="a" type="m">Plaets</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Als by Simon de <rhyme label="a" type="m" corresp="#s6:l1">Melaets</rhyme></l>
        <l id="s6:l3" met="4" type="+-">G'heel begerich, en <rhyme label="b" type="m">getrouw</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Aen haeren hoogh <rhyme label="c" type="f">Gepresen</rhyme>:</l>
        <l id="s6:l5" met="4" type="+-">Die zy oock naest ons Lief <rhyme label="b" type="m" corresp="#s6:l3">Vrouw</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Heeft moghen sien <rhyme label="c" type="f" corresp="#s6:l4">verresen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Zy buckt eens, en noch eens <rhyme label="a" type="m">in</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Als den Aert is vande <rhyme label="a" type="m" corresp="#s7:l1">min</rhyme>:</l>
        <l id="s7:l3" met="4" type="+-">Die eens niet en is <rhyme label="b" type="m">genoch</rhyme>.</l>
        <l id="s7:l4" met="3" type="-+">Wat sien ick? of ick <rhyme label="c" type="f">schemel</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">K'en sien geenen Jesus; <rhyme label="b" type="m" corresp="#s7:l3">toch</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Twee Engels uyt den <rhyme label="c" type="f" corresp="#s7:l4">hemel</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Zy spreken haer blyde <rhyme label="a" type="m">toe</rhyme>:</l>
        <l id="s8:l2" met="4" type="+-">Waerom maeckt gy u soo <rhyme label="a" type="m" corresp="#s8:l1">moe</rhyme>?</l>
        <l id="s8:l3" met="4" type="+-">Z'hebben mynen lieve <rhyme label="b" type="m">Godt</rhyme></l>
        <l id="s8:l4" met="3" type="-+">K'en weet waer <rhyme label="c" type="f">weghghenomen</rhyme>.</l>
        <l id="s8:l5" met="4" type="+-">O! Maria gy syt <rhyme label="b" type="m" corresp="#s8:l3">bodt</rhyme></l>
        <l id="s8:l6" met="3" type="-+">En hebdy niet <rhyme label="c" type="f" corresp="#s8:l4">vernomen</rhyme>?</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Hoort dees Engels beyde <rhyme label="a" type="m">gaer</rhyme>.</l>
        <l id="s9:l2" met="4" type="+-">Ick en soeck geen Engels, <rhyme label="a" type="m" corresp="#s9:l1">maer</rhyme></l>
        <l id="s9:l3" met="4" type="+-">Haren, ende mynen <rhyme label="b" type="m">Heer</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Dus liet zy d'Engels <rhyme label="c" type="f">sitten</rhyme>.</l>
        <l id="s9:l5" met="4" type="+-">En ontmoet een ander <rhyme label="b" type="m" corresp="#s9:l3">weer</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Soo't schynt, die kompt van <rhyme label="c" type="f" corresp="#s9:l4">spitten</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Het was den Beminden <rhyme label="a" type="m">self</rhyme>,</l>
        <l id="s10:l2" met="4" type="+-">Die noch niemandt vande <rhyme label="a" type="m" corresp="#s10:l1">Elf</rhyme></l>
        <l id="s10:l3" met="4" type="+-">En hadde verdiendt te <rhyme label="b" type="m">sien</rhyme>.</l>
        <l id="s10:l4" met="3" type="-+">Zy dede niet als <rhyme label="c" type="f">weenen</rhyme>.</l>
        <l id="s10:l5" met="4" type="+-">Zy meydt haer voor geene <rhyme label="b" type="m" corresp="#s10:l3">liên</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Zy beweeght schier de <rhyme label="c" type="f" corresp="#s10:l4">steenen</rhyme>,</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Hy vraeght haer: Een wonder <rhyme label="a" type="m">saeck</rhyme>!</l>
        <l id="s11:l2" met="4" type="+-">Zy kent hem aen zyne <rhyme label="a" type="m" corresp="#s11:l1">spraeck</rhyme>:</l>
        <l id="s11:l3" met="4" type="+-">Als hy haer noempt met de <rhyme label="b" type="m">naem</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Maria! ô! lief <rhyme label="c" type="f">Meester</rhyme>!</l>
        <l id="s11:l5" met="4" type="+-">Zy viel, en waert <rhyme label="b" type="m" corresp="#s11:l3">aengenaem</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Hingh aen gelijck een <rhyme label="c" type="f" corresp="#s11:l4">Cleester</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Maer den Heere op dat <rhyme label="a" type="m">pas</rhyme>,</l>
        <l id="s12:l2" met="4" type="+-">Als die hu verresen <rhyme label="a" type="m" corresp="#s12:l1">was</rhyme></l>
        <l id="s12:l3" met="4" type="+-">En wou niet geraeckt meer <rhyme label="b" type="m">syn</rhyme></l>
        <l id="s12:l4" met="3" type="-+">In teecken van <rhyme label="c" type="f">Caressen</rhyme></l>
        <l id="s12:l5" met="4" type="+-">Is Geloof, en Liefde <rhyme label="b" type="m" corresp="#s12:l3">ryn</rhyme>:</l>
        <l id="s12:l6" met="3" type="-+">Wie dees heeft, kan zyn <rhyme label="c" type="f" corresp="#s12:l4">lessen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Swyght nu kleyn Coragiê <rhyme label="a" type="m">swyght</rhyme>,</l>
        <l id="s13:l2" met="4" type="+-">Siet wat de volherdingh <rhyme label="a" type="m" corresp="#s13:l1">kryght</rhyme>!</l>
        <l id="s13:l3" met="4" type="+-">Die soeckt, vindt, en <rhyme label="b" type="m">ondervindt</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">En die styf klopt, kryght <rhyme label="c" type="f">open</rhyme>.</l>
        <l id="s13:l5" met="4" type="+-">Wie gy syt die Godt <rhyme label="b" type="m" corresp="#s13:l3">bemindt</rhyme>,</l>
        <l id="s13:l6" met="3" type="-+">Blyft soecken, ende <rhyme label="c" type="f" corresp="#s13:l4">hopen</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">Volght Maria met de <rhyme label="a" type="m">haer</rhyme>,</l>
        <l id="s14:l2" met="4" type="+-">En volght gaen Discipels <rhyme label="a" type="m" corresp="#s14:l1">naer</rhyme>;</l>
        <l id="s14:l3" met="4" type="+-">Die eens gaen, en keeren <rhyme label="b" type="m">weer</rhyme>.</l>
        <l id="s14:l4" met="3" type="-+">O welbedachte <rhyme label="c" type="f">vrouwen</rhyme>!</l>
        <l id="s14:l5" met="4" type="+-">Die vervolghen haren <rhyme label="b" type="m" corresp="#s14:l3">Heer</rhyme></l>
        <l id="s14:l6" met="3" type="-+">Tot datze hem <rhyme label="c" type="f" corresp="#s14:l4">aenschouwen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

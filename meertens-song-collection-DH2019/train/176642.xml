    <melody>De winter is een onwaarde gast</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Hendrik Rintjes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Ghy die den ouden Adam <rhyme label="a" type="m">gel</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Ghehoorsam zijt in <rhyme label="b" type="f">zonden</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Eer dat Gods toorne komt <rhyme label="a" type="m" corresp="#s1:l1">rebel</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Betert u <rhyme label="a" type="m" corresp="#s1:l1">snel</rhyme></l>
        <l id="s1:l5" met="3" type="-+">En wilt Gods woort <rhyme label="b" type="f" corresp="#s1:l2">door-gronden</rhyme>,</l>
        <l id="s1:l6" met="2" type="+-">t’Allen <rhyme label="b" type="f" corresp="#s1:l2">stonden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Leght af den ouden Adam <rhyme label="a" type="m">swaer</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Met al sijn quade <rhyme label="b" type="f">zeden</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En doet den nieuwen aen seer <rhyme label="a" type="m" corresp="#s2:l1">klaer</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">Christum <rhyme label="a" type="m" corresp="#s2:l1">eerbaer</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Op dat ghy komt in <rhyme label="b" type="f" corresp="#s2:l2">vreden</rhyme>,</l>
        <l id="s2:l6" met="2" type="+-">Met sijn <rhyme label="b" type="f" corresp="#s2:l2">leden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Niemant en mach twee Heeren <rhyme label="a" type="m">groot</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Dienen, ‘t is klaer <rhyme label="b" type="f">beschreven</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Wie de zonden valt in de <rhyme label="a" type="m" corresp="#s3:l1">schoot</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">Dat is de <rhyme label="a" type="m" corresp="#s3:l1">doodt</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Maer ‘t goet doen sonder <rhyme label="b" type="f" corresp="#s3:l2">sneven</rhyme>,</l>
        <l id="s3:l6" met="2" type="+-">Is het <rhyme label="b" type="f" corresp="#s3:l2">leven</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Laet de zonde als haet en <rhyme label="a" type="m">nijt</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">U vleesch niet meer <rhyme label="b" type="f">be-erven</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Maeckt u van alle boosheyt <rhyme label="a" type="m" corresp="#s4:l1">quijt</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">‘t Is meer dan <rhyme label="a" type="m" corresp="#s4:l1">tijdt</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Laetse in u <rhyme label="b" type="f" corresp="#s4:l2">versterven</rhyme>,</l>
        <l id="s4:l6" met="2" type="+-">En <rhyme label="b" type="f" corresp="#s4:l2">bederven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ghelijck dat ghy der zonden <rhyme label="a" type="m">placht</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Te leven, die u <rhyme label="b" type="f">verteerde</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Wilt nu anders worden <rhyme label="a" type="m" corresp="#s5:l1">bedacht</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">Met gheeste <rhyme label="a" type="m" corresp="#s5:l1">sacht</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Leyt een leven van <rhyme label="b" type="f" corresp="#s5:l2">weerde</rhyme>,</l>
        <l id="s5:l6" met="2" type="+-">Hier op <rhyme label="b" type="f" corresp="#s5:l2">d’eerde</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">En gaet met ‘t vleesch doch niet te <rhyme label="a" type="m">rae</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Of het sal u doen <rhyme label="b" type="f">beven</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Maer bidt den Heere om sijn <rhyme label="a" type="m" corresp="#s6:l1">ghenae</rhyme></l>
        <l id="s6:l4" met="2" type="-+">Vroegh ende <rhyme label="a" type="m" corresp="#s6:l1">spae</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Wilt hem alleen <rhyme label="b" type="f" corresp="#s6:l2">aen-kleven</rhyme>,</l>
        <l id="s6:l6" met="2" type="+-">Hy sal ‘t <rhyme label="b" type="f" corresp="#s6:l2">gheven</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Wandelt voort in den Gheest <rhyme label="a" type="m">oprecht</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Wilt u vleesch niet <rhyme label="b" type="f">versinnen</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Maer hem altijdts dat quaet <rhyme label="a" type="m" corresp="#s7:l1">ontseght</rhyme>,</l>
        <l id="s7:l4" met="2" type="-+">Want het <rhyme label="a" type="m" corresp="#s7:l1">beleght</rhyme></l>
        <l id="s7:l5" met="3" type="-+">De Zielen Geest van <rhyme label="b" type="f" corresp="#s7:l2">binnen</rhyme></l>
        <l id="s7:l6" met="2" type="+-">Om <rhyme label="b" type="f" corresp="#s7:l2">verwinnen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Zijt vast ghegront op de <rhyme label="a" type="m">Schriftuyr</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Wilt daer nae doen en <rhyme label="b" type="f">hooren</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">En wort een nieuwe <rhyme label="a" type="m" corresp="#s8:l1">Creatuyr</rhyme></l>
        <l id="s8:l4" met="2" type="-+">Van herten <rhyme label="a" type="m" corresp="#s8:l1">puyr</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Door ‘t Gheloove <rhyme label="b" type="f" corresp="#s8:l2">verkoren</rhyme>,</l>
        <l id="s8:l6" met="2" type="+-">Nieu <rhyme label="b" type="f" corresp="#s8:l2">gheboren</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Want Christus sprack, alsoo men <rhyme label="a" type="m">leest</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Tot Nicodemus <rhyme label="b" type="f">schoone</rhyme>:</l>
        <l id="s9:l3" met="4" type="-+">Soo ghy niet uyt water en <rhyme label="a" type="m" corresp="#s9:l1">Gheest</rhyme></l>
        <l id="s9:l4" met="2" type="-+">Herboren <rhyme label="a" type="m" corresp="#s9:l1">weest</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Ghy en hebt niet te <rhyme label="b" type="f" corresp="#s9:l2">loone</rhyme>,</l>
        <l id="s9:l6" met="2" type="+-">‘s Hemels <rhyme label="b" type="f" corresp="#s9:l2">kroone</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Neemt Christum vry tot een <rhyme label="a" type="m">voor-beelt</rhyme></l>
        <l id="s10:l2" met="3" type="-+">En wandelt op sijn <rhyme label="b" type="f">paden</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">En grijpt sijn woort tot eenen <rhyme label="a" type="m" corresp="#s10:l1">schilt</rhyme>,</l>
        <l id="s10:l4" met="2" type="-+">Niet toeven <rhyme label="a" type="m" corresp="#s10:l1">wilt</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Het sal u wel <rhyme label="b" type="f" corresp="#s10:l2">ontladen</rhyme></l>
        <l id="s10:l6" met="2" type="+-">Zijt <rhyme label="b" type="f" corresp="#s10:l2">beraden</rhyme></l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Want ghy en meucht u selven <rhyme label="a" type="m">niet</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Meer leven, maer den <rhyme label="b" type="f">Heere</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Die uyt liefden, dit wil <rhyme label="a" type="m" corresp="#s11:l1">insiet</rhyme>,</l>
        <l id="s11:l4" met="2" type="-+">Sijn leven <rhyme label="a" type="m" corresp="#s11:l1">liet</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">En wijckt in gheenen <rhyme label="b" type="f" corresp="#s11:l2">keere</rhyme>,</l>
        <l id="s11:l6" met="2" type="+-">Van sijn <rhyme label="b" type="f" corresp="#s11:l2">leere</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Maer ist dat ghy verstaet wel <rhyme label="a" type="m">mijn</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Van Gods Gheest zijt <rhyme label="b" type="f">ghedreven</rhyme>.</l>
        <l id="s12:l3" met="4" type="-+">Soo sult ghy van zijn kinders <rhyme label="a" type="m" corresp="#s12:l1">ziin</rhyme></l>
        <l id="s12:l4" met="2" type="-+">t’Allen <rhyme label="a" type="m" corresp="#s12:l1">termijn</rhyme></l>
        <l id="s12:l5" met="3" type="-+">Met hem in ‘t eeuwigh <rhyme label="b" type="f" corresp="#s12:l2">leven</rhyme>,</l>
        <l id="s12:l6" met="2" type="+-">Sijn <rhyme label="b" type="f" corresp="#s12:l2">verheven</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Dies moet ghy hier eerst in dit <rhyme label="a" type="m">wout</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Al nae Petrus <rhyme label="b" type="f">vermonden</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Beproeft worden oock menich <rhyme label="a" type="m" corresp="#s13:l1">fout</rhyme>,</l>
        <l id="s13:l4" met="2" type="-+">Beter dan <rhyme label="a" type="m" corresp="#s13:l1">gout</rhyme>,</l>
        <l id="s13:l5" met="3" type="-+">Moet u gheloof zijn <rhyme label="b" type="f" corresp="#s13:l2">vonden</rhyme>,</l>
        <l id="s13:l6" met="2" type="+-">t’Allen <rhyme label="b" type="f" corresp="#s13:l2">stonden</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">En vreest niet voor eenich <rhyme label="a" type="m">torment</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Christus sal u <rhyme label="b" type="f">ghenesen</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Belijdt hem voor de werelt <rhyme label="a" type="m" corresp="#s14:l1">blent</rhyme></l>
        <l id="s14:l4" met="2" type="-+">Tot in den <rhyme label="a" type="m" corresp="#s14:l1">endt</rhyme>,</l>
        <l id="s14:l5" met="3" type="-+">Soo sult ghy zaligh <rhyme label="b" type="f" corresp="#s14:l2">wesen</rhyme>,</l>
        <l id="s14:l6" met="2" type="+-">Soo wy <rhyme label="b" type="f" corresp="#s14:l2">lesen</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Die dit liedt eerst voort heeft <rhyme label="a" type="m">gebracht</rhyme></l>
        <l id="s15:l2" met="3" type="-+">En dedet niet om <rhyme label="b" type="f">roemen</rhyme>.</l>
        <l id="s15:l3" met="4" type="-+">Hy bidt elck een te houden <rhyme label="a" type="m" corresp="#s15:l1">wacht</rhyme></l>
        <l id="s15:l4" met="2" type="-+">Met alder <rhyme label="a" type="m" corresp="#s15:l1">kracht</rhyme>,</l>
        <l id="s15:l5" met="3" type="-+">Dat sy in ‘t Helsch <rhyme label="b" type="f" corresp="#s15:l2">verdoemen</rhyme>,</l>
        <l id="s15:l6" met="2" type="+-">Niet en <rhyme label="b" type="f" corresp="#s15:l2">komen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

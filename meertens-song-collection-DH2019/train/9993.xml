    <melody>Roosjes in de mei</melody>
  <author>Isaak A. van Vaerlen en Jan Jansz. van Asten</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HOe lieflick rijst de Gulde <rhyme label="a" type="m">Son</rhyme></l>
        <l id="s1:l2" met="2" type="-+">In't <rhyme label="b" type="m">Morgen-root</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Och dat ick mijn Liefje hier wenschen <rhyme label="a" type="m" corresp="#s1:l1">kon</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Die met lusten, mijn kusten, en <rhyme label="c" type="f">rusten</rhyme></l>
        <l id="s1:l5" met="2" type="-+">Mocht in sijn <rhyme label="b" type="m" corresp="#s1:l2">schoot</rhyme>:</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Maer laes mijn Lief'tis al te <rhyme label="a" type="m">veer</rhyme>,</l>
        <l id="s2:l2" met="2" type="-+">Te veer van <rhyme label="b" type="m">mijn</rhyme>;</l>
        <l id="s2:l3" met="4" type="-+">Kan 't wesen Lief komt haestigh <rhyme label="a" type="m" corresp="#s2:l1">weer</rhyme>:</l>
        <l id="s2:l4" met="4" type="-+">Want mijn Sinnen, beginnen door 't <rhyme label="c" type="f">Minnen</rhyme></l>
        <l id="s2:l5" met="2" type="-+">Ontstelt te <rhyme label="b" type="m" corresp="#s2:l2">zijn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ontsteld, en tot der Doodt <rhyme label="a" type="m">bedroeft</rhyme></l>
        <l id="s3:l2" met="2" type="-+">Valt mijn soo <rhyme label="b" type="m">suer</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Dat ghy in 't komen soo langh <rhyme label="a" type="m" corresp="#s3:l1">vertoeft</rhyme>:</l>
        <l id="s3:l4" met="4" type="-+">Mijn gedachten vol <rhyme label="c" type="f">klachten</rhyme></l>
        <l id="s3:l5" met="2" type="-+">Verwachten uer op <rhyme label="b" type="m" corresp="#s3:l2">uer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Den Droom ontstelt mijn droef <rhyme label="a" type="m">gemoedt</rhyme>,</l>
        <l id="s4:l2" met="2" type="-+">Ach <rhyme label="b" type="m">Roodermont</rhyme>!</l>
        <l id="s4:l3" met="4" type="-+">Mijn docht ick sagh u inde <rhyme label="a" type="m" corresp="#s4:l1">Vloet</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Van de Winden beminde <rhyme label="c" type="f">verslinden</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">En gaen te <rhyme label="b" type="m" corresp="#s4:l2">grondt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Noch docht my dat u Lichaem <rhyme label="a" type="m">quam</rhyme></l>
        <l id="s5:l2" met="2" type="-+">Mismaeckt aen <rhyme label="b" type="m">Strant</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Daer ickse in mijn Armen <rhyme label="a" type="m" corresp="#s5:l1">nam</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">En met eenen: u Benen, met <rhyme label="c" type="f">wenen</rhyme></l>
        <l id="s5:l5" met="2" type="-+">Begroef in 't <rhyme label="b" type="m" corresp="#s5:l2">Sant</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ontwaeckt ginck ick aen Zee, en <rhyme label="a" type="m">sagh</rhyme>,</l>
        <l id="s6:l2" met="2" type="-+">Als ick <rhyme label="b" type="m">bevond</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Dat niemant daer verdroncken <rhyme label="a" type="m" corresp="#s6:l1">lagh</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Steld ick heden, mijn Leden, te <rhyme label="c" type="f">vreden</rhyme>,</l>
        <l id="s6:l5" met="2" type="-+">Soo ick best <rhyme label="b" type="m" corresp="#s6:l2">kond</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Maer noyt en sal de schrick <rhyme label="a" type="m">vergaen</rhyme>,</l>
        <l id="s7:l2" met="2" type="-+">Voor dat ick <rhyme label="b" type="m">weer</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Mijn Lief sal voor mijn Oogen sien <rhyme label="a" type="m" corresp="#s7:l1">staen</rhyme>:</l>
        <l id="s7:l4" met="4" type="-+">En sijn Kaken, met smake, sal <rhyme label="c" type="f">raken</rhyme>:</l>
        <l id="s7:l5" met="2" type="-+">Maer laes <rhyme label="b" type="m" corresp="#s7:l2">wanneer</rhyme>?</l>
      </lg>
    </lg>
  </text>
</song>

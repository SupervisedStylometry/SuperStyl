    <melody>O God hoe ijdel zijn alle mensen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">GHepeyns ghepeyns door <rhyme label="a" type="f">fantasie</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Hoe ligt ghy my nv so seere en <rhyme label="b" type="m">quelt</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Tsomwijlen truerich, tsomwijlen <rhyme label="a" type="f" corresp="#s1:l1">blie</rhyme></l>
        <l id="s1:l4" met="4" type="-+">O Heer helpt ons behouden dat <rhyme label="b" type="m" corresp="#s1:l2">velt</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Compt coopt van my al sonder <rhyme label="b" type="m" corresp="#s1:l2">gelt</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Wijn en melck na schrift <rhyme label="c" type="m">verhalen</rhyme></l>
        <l id="s1:l7" met="4" type="-+">Sonder ghelt oft pant ghy en moecht niet <rhyme label="c" type="m" corresp="#s1:l6">falen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Compt ghy belaste ick wil v <rhyme label="a" type="f">ontladen</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Spreect Christus de Heer int <rhyme label="b" type="m">openbaer</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Al met mijn vlees wil ick v <rhyme label="a" type="f" corresp="#s2:l1">versaden</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Die in my ghelooft ende volcht mi <rhyme label="b" type="m" corresp="#s2:l2">naer</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Uan diens lyue sulken vloeyen <rhyme label="b" type="m" corresp="#s2:l2">claer</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Wateren des leuens elck merck dit <rhyme label="c" type="m">snel</rhyme></l>
        <l id="s2:l7" met="4" type="-+">Blijft bi Gods woort soo doet ghy <rhyme label="c" type="m" corresp="#s2:l6">wel</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Wie het cruyce niet en wilt <rhyme label="a" type="f">aenueerden</rhyme></l>
        <l id="s3:l2" met="4" type="-+">En treden inden enghen <rhyme label="b" type="m">padt</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Die en houdt Christus niet van <rhyme label="a" type="f" corresp="#s3:l1">weerden</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Hoe sal hy comen in die nieuwe <rhyme label="b" type="m" corresp="#s3:l2">stadt</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Want wie niet altemael en versaect <rhyme label="b" type="m" corresp="#s3:l2">pladt</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Ulees, bloet, ere, goet, lijf, ende <rhyme label="c" type="m">leuen</rhyme></l>
        <l id="s3:l7" met="4" type="-+">Die en sal Christus gheen erfdeel <rhyme label="c" type="m" corresp="#s3:l6">gheuen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Maer die gheen deel met God en <rhyme label="a" type="f">eruen</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Beter mochten si ongheboren <rhyme label="b" type="m">zijn</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Als si dat nieu Ierusalem sullen <rhyme label="a" type="f" corresp="#s4:l1">deruen</rhyme></l>
        <l id="s4:l4" met="4" type="-+">En gaen al in die eewighe <rhyme label="b" type="m" corresp="#s4:l2">pijn</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Dan sullen si alle weenende <rhyme label="b" type="m" corresp="#s4:l2">zijn</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Als si door Gods woort haer oordeel <rhyme label="c" type="m">ontfaen</rhyme></l>
        <l id="s4:l7" met="4" type="-+">Die geen beteringhe en hebben <rhyme label="c" type="m" corresp="#s4:l6">ghedaen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Bekeert v nv spreeckt Christus <rhyme label="a" type="f">saen</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Want dat hemelrijck is nv ghecomen <rhyme label="b" type="m">by</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Ghelooft Deuangelium die waerheyt neemt <rhyme label="a" type="f" corresp="#s5:l1">aen</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Soo sal v die waerheyt maecken <rhyme label="b" type="m" corresp="#s5:l2">vry</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Doet penitencie dat segghe ick <rhyme label="b" type="m" corresp="#s5:l2">dy</rhyme></l>
        <l id="s5:l6" met="4" type="-+">Als Petrus den Ioden <rhyme label="c" type="m">verclaert</rhyme></l>
        <l id="s5:l7" met="4" type="-+">Ende volbrengt Gods liefde <rhyme label="c" type="m" corresp="#s5:l6">vermaert</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Siet wel toe en laet v niet <rhyme label="a" type="f">verleyden</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Als in deerste Corint int seste <rhyme label="b" type="m">staet</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Uan oncuyssche, en afgoden dienare <rhyme label="a" type="f" corresp="#s6:l1">beyden</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Ouerspeelders, wreekelinghen, ende schenders <rhyme label="b" type="m" corresp="#s6:l2">quaet</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Dieuen, en gierighe en dronckaerts <rhyme label="b" type="m" corresp="#s6:l2">opstinaet</rhyme></l>
        <l id="s6:l6" met="4" type="-+">En twistighe, en roouere, en moghen Gods <rhyme label="c" type="m">rijck</rhyme></l>
        <l id="s6:l7" met="4" type="-+">Niet besitten, nv noch <rhyme label="c" type="m" corresp="#s6:l6">eewichlijck</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">O lieue menschen wilt hier op <rhyme label="a" type="f">mercken</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Want sodanighe zijn wy al <rhyme label="b" type="m">gheweest</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Doen wy noch liepen in boose <rhyme label="a" type="f" corresp="#s7:l1">wercken</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Maer want ons Christus daer af <rhyme label="b" type="m" corresp="#s7:l2">gheneest</rhyme></l>
        <l id="s7:l5" met="4" type="-+">Door die weder gheboorte somen dat <rhyme label="b" type="m" corresp="#s7:l2">leest</rhyme></l>
        <l id="s7:l6" met="4" type="-+">So wilt sober wesen in bedinghe <rhyme label="c" type="m">waecken</rhyme></l>
        <l id="s7:l7" met="4" type="-+">Den ouden mensche moet ghy <rhyme label="c" type="m" corresp="#s7:l6">versaecken</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Weest altemael den Heer <rhyme label="a" type="f">beuolen</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Al die de nieuwe gheboorte aen <rhyme label="b" type="m">staen</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Ghelooft Gods woort ghy en sult niet <rhyme label="a" type="f" corresp="#s8:l1">dolen</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Door de liefde sult ghy Gods rijck <rhyme label="b" type="m" corresp="#s8:l2">ingaen</rhyme></l>
        <l id="s8:l5" met="4" type="-+">Ende van Christo die croone <rhyme label="b" type="m" corresp="#s8:l2">ontfaen</rhyme></l>
        <l id="s8:l6" met="4" type="-+">Hy sal v verblyden met <rhyme label="c" type="m">melodye</rhyme></l>
        <l id="s8:l7" met="4" type="-+">Die nv zijt beswaert sullen worden <rhyme label="c" type="m" corresp="#s8:l6">blye</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

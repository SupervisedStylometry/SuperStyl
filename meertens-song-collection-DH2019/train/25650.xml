  <author>Leenaert Clock</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Het is voorwaer een  <rhyme label="a" type="f">deuchde</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Nu ooptmoedich te <rhyme label="b" type="m">zijn</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Rycklijck verheucht in <rhyme label="a" type="f" corresp="#s1:l1">vreuchde</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Raeckt men daer door met <rhyme label="b" type="m" corresp="#s1:l2">schijn</rhyme>:</l>
        <l id="s1:l5" met="3" type="-+">Ommer ten Hemel <rhyme label="b" type="m" corresp="#s1:l2">fijn</rhyme></l>
        <l id="s1:l6" met="3" type="-+">T’samen laet ons dit <rhyme label="c" type="f">leeren</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">En neement aen <rhyme label="b" type="m" corresp="#s1:l2">devijn</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Levende Godt ter <rhyme label="c" type="f" corresp="#s1:l6">eeren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ghenuecht daer in <rhyme label="a" type="f">hantieren</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Levende wijslijck <rhyme label="b" type="m">voort</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Naer Christelijcke <rhyme label="a" type="f" corresp="#s2:l1">manieren</rhyme></l>
        <l id="s2:l4" met="3" type="-+">T’samen alsoo’t <rhyme label="b" type="m" corresp="#s2:l2">behoort</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Met moede <rhyme label="b" type="m" corresp="#s2:l2">onghestoort</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Haer roepen sal Godt <rhyme label="c" type="f">hooren</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">En nae sijn heylich <rhyme label="b" type="m" corresp="#s2:l2">woort</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Nemen in sijne <rhyme label="c" type="f" corresp="#s2:l6">ooren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Sevenvoudich <rhyme label="a" type="f">verheven</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Daer toe, O Heere <rhyme label="b" type="m">goet</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Ons wilt ghenadich <rhyme label="a" type="f" corresp="#s3:l1">gheven</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Crachte ws Gheestes <rhyme label="b" type="m" corresp="#s3:l2">soet</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Houdt ons in u <rhyme label="b" type="m" corresp="#s3:l2">behoet</rhyme>:</l>
        <l id="s3:l6" met="3" type="-+">Te recht maeckt ons <rhyme label="c" type="f">bequame</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">En ons doch bystandt <rhyme label="b" type="m" corresp="#s3:l2">doet</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Nae u goetheyt <rhyme label="c" type="f" corresp="#s3:l6">eersame</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">En deelt doch Heer ons <rhyme label="a" type="f">mede</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Eenen sin heel <rhyme label="b" type="m">verneert</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Soo oprecht (t’is ons <rhyme label="a" type="f" corresp="#s4:l1">bede</rhyme>)</l>
        <l id="s4:l4" met="3" type="-+">Naer al t’ghene <rhyme label="b" type="m" corresp="#s4:l2">ghekeert</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Wat ootmoedich <rhyme label="b" type="m" corresp="#s4:l2">leert</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Soo ghy’t Heer doet <rhyme label="c" type="f">beminnen</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Laet het worden <rhyme label="b" type="m" corresp="#s4:l2">vermeert</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Diep in ons herte <rhyme label="c" type="f" corresp="#s4:l6">binnen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Geselschap hier te <rhyme label="a" type="f">soecken</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Vernedert ende <rhyme label="b" type="m">cleyn</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">D’ootmoedighe als <rhyme label="a" type="f" corresp="#s5:l1">cloecken</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Hier beminnen <rhyme label="b" type="m" corresp="#s5:l2">alleyn</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">En ons daer nae <rhyme label="b" type="m" corresp="#s5:l2">ghemeyn</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Maken in alle <rhyme label="c" type="f">wijcken</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Want ellick Dier <rhyme label="b" type="m" corresp="#s5:l2">certeyn</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Soeckt nu hier sijns <rhyme label="c" type="f" corresp="#s5:l6">ghelijcken</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Leert ons lief Heere <rhyme label="a" type="f">blijden</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Die hoogheyt alst <rhyme label="b" type="m">fenijn</rhyme></l>
        <l id="s6:l3" met="3" type="-+">En als t’vergif <rhyme label="a" type="f" corresp="#s6:l1">vermijden</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Want sy brenght int <rhyme label="b" type="m" corresp="#s6:l2">ghepijn</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Christus ons hooft <rhyme label="b" type="m" corresp="#s6:l2">devijn</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Die weeck (t’zijn onse <rhyme label="c" type="f">baken</rhyme>)</l>
        <l id="s6:l7" met="3" type="-+">Doe men op dat <rhyme label="b" type="m" corresp="#s6:l2">termijn</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Hem Coninck wilde <rhyme label="c" type="f" corresp="#s6:l6">maken</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Ia dat wy moghen <rhyme label="a" type="f">wesen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Gheern ootmoedich <rhyme label="b" type="m">gheacht</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Maer daer in niet <rhyme label="a" type="f" corresp="#s7:l1">ghepresen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">By’t Menschelijck <rhyme label="b" type="m" corresp="#s7:l2">gheslacht</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Met David wel <rhyme label="b" type="m" corresp="#s7:l2">bedacht</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Laet ons Heer om <rhyme label="c" type="f">verhooghen</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Ootmoedich dach en <rhyme label="b" type="m" corresp="#s7:l2">nacht</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Zijn in ons eyghen <rhyme label="c" type="f" corresp="#s7:l6">ooghen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Cloecklijck sterckt onse <rhyme label="a" type="f">leden</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Dat wy gheern moghen <rhyme label="b" type="m">doen</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Op Aerden hier <rhyme label="a" type="f" corresp="#s8:l1">beneden</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Nedrig diensten <rhyme label="b" type="m" corresp="#s8:l2">coen</rhyme>:</l>
        <l id="s8:l5" met="3" type="-+">Christus de Wijnstock <rhyme label="b" type="m" corresp="#s8:l2">groen</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Sijn Ionghers te <rhyme label="c" type="f">ontmoeten</rhyme>.</l>
        <l id="s8:l7" met="3" type="-+">En haer dit te <rhyme label="b" type="m" corresp="#s8:l2">bevroen</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Soo wiesch hy haer de <rhyme label="c" type="f" corresp="#s8:l6">voeten</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Syt ons lief Heer <rhyme label="a" type="f">beradich</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">En voor eyghen <rhyme label="b" type="m">wijsheyt</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Behoedt ons doch <rhyme label="a" type="f" corresp="#s9:l1">ghenadich</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Dees menighen <rhyme label="b" type="m" corresp="#s9:l2">verleydt</rhyme>:</l>
        <l id="s9:l5" met="3" type="-+">Maeckt ons herte <rhyme label="b" type="m" corresp="#s9:l2">bereydt</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Dat wy in al ons <rhyme label="c" type="f">weghen</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Soo de Schriftuere <rhyme label="b" type="m" corresp="#s9:l2">seyt</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Goeden raet moghen <rhyme label="c" type="f" corresp="#s9:l6">pleghen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Maeckt doch, o lieve <rhyme label="a" type="f">Heere</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Onse herten <rhyme label="b" type="m">bequaem</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Dat u heylsame <rhyme label="a" type="f" corresp="#s10:l1">leere</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Ons nu zy <rhyme label="b" type="m" corresp="#s10:l2">aenghenaem</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Als wy daer door <rhyme label="b" type="m" corresp="#s10:l2">vreuchtsaem</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Nu onderwijs <rhyme label="c" type="f">ontfanghen</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Dat wy soo naer’t <rhyme label="b" type="m" corresp="#s10:l2">betaem</rhyme></l>
        <l id="s10:l8" met="3" type="-+">Hier beteren ons <rhyme label="c" type="f" corresp="#s10:l6">ganghen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Fluyt soet nae u <rhyme label="a" type="f">behaghen</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Soud’ dit zijn nu ter <rhyme label="b" type="m">tijt</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Boomen die soo vrucht <rhyme label="a" type="f" corresp="#s11:l1">draghen</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Worden <rhyme label="b" type="m" corresp="#s11:l2">ghebenedijt</rhyme>:</l>
        <l id="s11:l5" met="3" type="-+">Lief Heer ons helper <rhyme label="b" type="m" corresp="#s11:l2">zijt</rhyme></l>
        <l id="s11:l6" met="3" type="-+">Om ons soo te <rhyme label="c" type="f">bewijsen</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">En int herte <rhyme label="b" type="m" corresp="#s11:l2">verblijt</rhyme></l>
        <l id="s11:l8" met="3" type="-+">In ootmoedt <rhyme label="c" type="f" corresp="#s11:l6">verjolijsen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Roemen van u <rhyme label="a" type="f">goetdaden</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Sal onse ziel voor <rhyme label="b" type="m">al</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Als sy dit (uyt <rhyme label="a" type="f" corresp="#s12:l1">ghenaden</rhyme>)</l>
        <l id="s12:l4" met="3" type="-+">Alsoo bevinden <rhyme label="b" type="m" corresp="#s12:l2">sal</rhyme>:</l>
        <l id="s12:l5" met="3" type="-+">V loven met <rhyme label="b" type="m" corresp="#s12:l2">gheschal</rhyme></l>
        <l id="s12:l6" met="3" type="-+">Sullen wy dan te <rhyme label="c" type="f">samen</rhyme>,</l>
        <l id="s12:l7" met="3" type="-+">Laet dit in d’Aerdtsche <rhyme label="b" type="m" corresp="#s12:l2">dal</rhyme></l>
        <l id="s12:l8" met="3" type="-+">Over ons comen, <rhyme label="c" type="f" corresp="#s12:l6">Amen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

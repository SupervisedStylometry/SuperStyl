  <author>Jacobus Revius</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">WIlt mijn bede, Heer, <rhyme label="a" type="f">verhooren</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Latet comen tot u <rhyme label="a" type="f" corresp="#s1:l1">ooren</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Mijn geroep wanneer ick <rhyme label="b" type="m">ly</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Bergt u aensicht niet voor <rhyme label="b" type="m" corresp="#s1:l3">my</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">In den dage der <rhyme label="c" type="f">ellenden</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Wilt uw' oore tot my <rhyme label="c" type="f" corresp="#s1:l5">wenden</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Als ick u aenbid' <rhyme label="d" type="f">ootmoedich</rhyme></l>
        <l id="s1:l8" met="4" type="+-">Hooret ende helpt my <rhyme label="d" type="f" corresp="#s1:l7">spoedich</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Want de dagen van mijn <rhyme label="a" type="f">leven</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Zijn verwaeyt, verdwenen, <rhyme label="a" type="f" corresp="#s2:l1">even</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Als een nevel, als een <rhyme label="b" type="m">roock</rhyme>.</l>
        <l id="s2:l4" met="4" type="+-">Mijn gebeent' ontbrandet <rhyme label="b" type="m" corresp="#s2:l3">oock</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Als een heert-stee. angst en <rhyme label="c" type="f">smerte</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Doet als hooy vergaen mijn <rhyme label="c" type="f" corresp="#s2:l5">herte</rhyme>.</l>
        <l id="s2:l7" met="4" type="+-">Soo dat ick schier heb <rhyme label="d" type="f">vergeten</rhyme></l>
        <l id="s2:l8" met="4" type="+-">Mijn nootwendich broot te <rhyme label="d" type="f" corresp="#s2:l7">eeten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Door mijn suchten, door mijn <rhyme label="a" type="f">beven</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Vlees en beenen <rhyme label="a" type="f" corresp="#s3:l1">t'samen-cleven</rhyme>.</l>
        <l id="s3:l3" met="4" type="+-">Door mijn jammerlijck <rhyme label="b" type="m">geclach</rhyme></l>
        <l id="s3:l4" met="4" type="+-">'tWelck geduert den heelen <rhyme label="b" type="m" corresp="#s3:l3">dach</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Als den roerdomp der <rhyme label="c" type="f">woestijnen</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Werd' ick door dit eensaem <rhyme label="c" type="f" corresp="#s3:l5">quijnen</rhyme>.</l>
        <l id="s3:l7" met="4" type="+-">Als een steen-uyl inden <rhyme label="d" type="f">woude</rhyme></l>
        <l id="s3:l8" met="4" type="+-">Ick my afgesondert <rhyme label="d" type="f" corresp="#s3:l7">houde</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Ick verslijt den nacht in <rhyme label="a" type="f">waken</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Als een mussche op de <rhyme label="a" type="f" corresp="#s4:l1">daken</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Treurich swervet hier en <rhyme label="b" type="m">daer</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Missende haer <rhyme label="b" type="m" corresp="#s4:l3">wederpaer</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">Mijne vyanden my <rhyme label="c" type="f">schenden</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Haer gespot sy nimmer <rhyme label="c" type="f" corresp="#s4:l5">enden</rhyme>.</l>
        <l id="s4:l7" met="4" type="+-">Die my trachten te <rhyme label="d" type="f">ont-eeren</rhyme></l>
        <l id="s4:l8" met="4" type="+-">By my vloecken ende <rhyme label="d" type="f" corresp="#s4:l7">sweeren</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Dies ick inden stof <rhyme label="a" type="f">geseten</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Assche voor mijn broot moet <rhyme label="a" type="f" corresp="#s5:l1">eeten</rhyme>.</l>
        <l id="s5:l3" met="4" type="+-">En met tranen <rhyme label="b" type="m">uytgestort</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Mijnen dranck vermenget <rhyme label="b" type="m" corresp="#s5:l3">wort</rhyme>:</l>
        <l id="s5:l5" met="4" type="+-">Heer, om uwen grooten <rhyme label="c" type="f">toren</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Die my haddet hier te <rhyme label="c" type="f" corresp="#s5:l5">voren</rhyme></l>
        <l id="s5:l7" met="4" type="+-">In een hoogen staet <rhyme label="d" type="f">verheven</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">En nu hebt te grond' <rhyme label="d" type="f" corresp="#s5:l7">gedreven</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Mijne dagen zijn <rhyme label="a" type="f">ge-endet</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Als een schadu die sich <rhyme label="a" type="f" corresp="#s6:l1">wendet</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Ick verdorre als het <rhyme label="b" type="m">gras</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Als een afgemaeyt <rhyme label="b" type="m" corresp="#s6:l3">gewas</rhyme></l>
        <l id="s6:l5" met="4" type="+-">'tWelck niet weder can <rhyme label="c" type="f">beclijven</rhyme>.</l>
        <l id="s6:l6" met="4" type="+-">Maer ghy Heer moet eeuwich <rhyme label="c" type="f" corresp="#s6:l5">blijven</rhyme>.</l>
        <l id="s6:l7" met="4" type="+-">Ghy sult leven in <rhyme label="d" type="f">gedachte</rhyme></l>
        <l id="s6:l8" met="4" type="+-">Van geslachte tot <rhyme label="d" type="f" corresp="#s6:l7">geslachte</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Ghy sult, nae soo vele <rhyme label="a" type="f">kermen</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Met een vaderlijck <rhyme label="a" type="f" corresp="#s7:l1">ontfermen</rhyme></l>
        <l id="s7:l3" met="4" type="+-">Sion wesen <rhyme label="b" type="m">goedertier</rhyme>.</l>
        <l id="s7:l4" met="4" type="+-">Rijset op, den tijt is <rhyme label="b" type="m" corresp="#s7:l3">hier</rhyme>.</l>
        <l id="s7:l5" met="4" type="+-">Huyden is den dach <rhyme label="c" type="f">verschenen</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Om te letten op haer <rhyme label="c" type="f" corresp="#s7:l5">weenen</rhyme>,</l>
        <l id="s7:l7" met="4" type="+-">Ia de uyr by u <rhyme label="d" type="f">beslooten</rhyme></l>
        <l id="s7:l8" met="4" type="+-">Is voorseker nu <rhyme label="d" type="f" corresp="#s7:l7">vervloten</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Geerne souden uwe <rhyme label="a" type="f">knechten</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Hare steenen op sien <rhyme label="a" type="f" corresp="#s8:l1">rechten</rhyme>.</l>
        <l id="s8:l3" met="4" type="+-">'tIs haer hoochste <rhyme label="b" type="m">droefenis</rhyme></l>
        <l id="s8:l4" met="4" type="+-">Datse soo vervallen <rhyme label="b" type="m" corresp="#s8:l3">is</rhyme>.</l>
        <l id="s8:l5" met="4" type="+-">Heydens u dan sullen <rhyme label="c" type="f">eeren</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Alle coningen en <rhyme label="c" type="f" corresp="#s8:l5">heeren</rhyme></l>
        <l id="s8:l7" met="4" type="+-">Sullen uwen naem in <rhyme label="d" type="f">weerde</rhyme></l>
        <l id="s8:l8" met="4" type="+-">Houden op de gantsche <rhyme label="d" type="f" corresp="#s8:l7">eerde</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Als de Heer die wy <rhyme label="a" type="f">betrouwen</rhyme></l>
        <l id="s9:l2" met="4" type="+-">Sions mueren sal op <rhyme label="a" type="f" corresp="#s9:l1">bouwen</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Als hy ons laet sien het <rhyme label="b" type="m">licht</rhyme></l>
        <l id="s9:l4" met="4" type="+-">Van syn minlijck <rhyme label="b" type="m" corresp="#s9:l3">aengesicht</rhyme>,</l>
        <l id="s9:l5" met="4" type="+-">Als de Heer heeft <rhyme label="c" type="f">acht-geslagen</rhyme></l>
        <l id="s9:l6" met="4" type="+-">Op haer treuren ende <rhyme label="c" type="f" corresp="#s9:l5">clagen</rhyme></l>
        <l id="s9:l7" met="4" type="+-">Die van hulpe zijn <rhyme label="d" type="f">ontblotet</rhyme>,</l>
        <l id="s9:l8" met="4" type="+-">En haer bede niet <rhyme label="d" type="f" corresp="#s9:l7">verstotet</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Dat sal werden <rhyme label="a" type="f">opgeschreven</rhyme></l>
        <l id="s10:l2" met="4" type="+-">Voor die na-maels sullen <rhyme label="a" type="f" corresp="#s10:l1">leven</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Dat het werde <rhyme label="b" type="m">overdacht</rhyme></l>
        <l id="s10:l4" met="4" type="+-">En op kindes kint <rhyme label="b" type="m" corresp="#s10:l3">gebracht</rhyme>.</l>
        <l id="s10:l5" met="4" type="+-">'tVolck dat noch niet is <rhyme label="c" type="f">geboren</rhyme></l>
        <l id="s10:l6" met="4" type="+-">Sal met vreugde laten <rhyme label="c" type="f" corresp="#s10:l5">hooren</rhyme></l>
        <l id="s10:l7" met="4" type="+-">Over-al den roem en <rhyme label="d" type="f">eere</rhyme></l>
        <l id="s10:l8" met="4" type="+-">Van des werelts eeuwich <rhyme label="d" type="f" corresp="#s10:l7">Heere</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Als hy ons heeft <rhyme label="a" type="f">aengeschouwet</rhyme></l>
        <l id="s11:l2" met="4" type="+-">Wt den hemel <rhyme label="a" type="f" corresp="#s11:l1">schoon-gebouwet</rhyme>.</l>
        <l id="s11:l3" met="4" type="+-">Als hy van syn woning' <rhyme label="b" type="m">hooch</rhyme></l>
        <l id="s11:l4" met="4" type="+-">Na beneden slaet syn <rhyme label="b" type="m" corresp="#s11:l3">ooch</rhyme>,</l>
        <l id="s11:l5" met="4" type="+-">Om het suchten te <rhyme label="c" type="f">ontfangen</rhyme></l>
        <l id="s11:l6" met="4" type="+-">Der ellendige <rhyme label="c" type="f" corresp="#s11:l5">gevangen</rhyme>,</l>
        <l id="s11:l7" met="4" type="+-">En by 't leven te <rhyme label="d" type="f">bewaren</rhyme></l>
        <l id="s11:l8" met="4" type="+-">Die ter doot ge-eygent <rhyme label="d" type="f" corresp="#s11:l7">waren</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Op dat yder onsen <rhyme label="a" type="f">Heere</rhyme></l>
        <l id="s12:l2" met="4" type="+-">Doe in Sion plicht en <rhyme label="a" type="f" corresp="#s12:l1">eere</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">Datmen hem met luyder <rhyme label="b" type="m">stem</rhyme></l>
        <l id="s12:l4" met="4" type="+-">Love te <rhyme label="b" type="m" corresp="#s12:l3">Ierusalem</rhyme>.</l>
        <l id="s12:l5" met="4" type="+-">Als de volckeren <rhyme label="c" type="f">tesame</rhyme>-</l>
        <l id="s12:l6" met="4" type="+-">Comen in des Heeren <rhyme label="c" type="f" corresp="#s12:l5">name</rhyme>,</l>
        <l id="s12:l7" met="4" type="+-">Als haer alle <rhyme label="d" type="f">coninckrijcken</rhyme></l>
        <l id="s12:l8" met="4" type="+-">Hem te dienen <rhyme label="d" type="f" corresp="#s12:l7">vergelijcken</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Op den wech, door berch en <rhyme label="a" type="f">dalen</rhyme>,</l>
        <l id="s13:l2" met="4" type="+-">Daer ick balling' most gaen <rhyme label="a" type="f" corresp="#s13:l1">dwalen</rhyme></l>
        <l id="s13:l3" met="4" type="+-">Heeft hy my ter neer <rhyme label="b" type="m">gestort</rhyme></l>
        <l id="s13:l4" met="4" type="+-">En myn leven <rhyme label="b" type="m" corresp="#s13:l3">afgecort</rhyme>.</l>
        <l id="s13:l5" met="4" type="+-">Laet my (seyd' ick) niet <rhyme label="c" type="f">verslagen</rhyme></l>
        <l id="s13:l6" met="4" type="+-">Zijn int midden mijner <rhyme label="c" type="f" corresp="#s13:l5">dagen</rhyme>:</l>
        <l id="s13:l7" met="4" type="+-">Want, of alles schoon sich <rhyme label="d" type="f">wendet</rhyme>,</l>
        <l id="s13:l8" met="4" type="+-">Vwe jaer-tijt nimmer <rhyme label="d" type="f" corresp="#s13:l7">endet</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">Ghy hebt voormaels d'aerd' <rhyme label="a" type="f">gegrondet</rhyme>,</l>
        <l id="s14:l2" met="4" type="+-">En de hemelen <rhyme label="a" type="f" corresp="#s14:l1">gerondet</rhyme>.</l>
        <l id="s14:l3" met="4" type="+-">Alle moeten sy <rhyme label="b" type="m">vergaen</rhyme>,</l>
        <l id="s14:l4" met="4" type="+-">Maer ghy, Heere, sult <rhyme label="b" type="m" corresp="#s14:l3">bestaen</rhyme>.</l>
        <l id="s14:l5" met="4" type="+-">Alle moeten sy <rhyme label="c" type="f">ver-ouden</rhyme></l>
        <l id="s14:l6" met="4" type="+-">Sonder haren stant te <rhyme label="c" type="f" corresp="#s14:l5">houden</rhyme>,</l>
        <l id="s14:l7" met="4" type="+-">Als een kleet van een <rhyme label="d" type="f">gereten</rhyme></l>
        <l id="s14:l8" met="4" type="+-">Of allenskens <rhyme label="d" type="f" corresp="#s14:l7">afgesleten</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="+-">Als een lang-gebesicht <rhyme label="a" type="f">laken</rhyme></l>
        <l id="s15:l2" met="4" type="+-">Suldy haer te niete <rhyme label="a" type="f" corresp="#s15:l1">maken</rhyme>.</l>
        <l id="s15:l3" met="4" type="+-">Want in haer en alle <rhyme label="b" type="m">ding</rhyme></l>
        <l id="s15:l4" met="4" type="+-">Comen moet <rhyme label="b" type="m" corresp="#s15:l3">verandering</rhyme>.</l>
        <l id="s15:l5" met="4" type="+-">Maer ghy, Heer, zijt <rhyme label="c" type="f">onvergancklijck</rhyme>,</l>
        <l id="s15:l6" met="4" type="+-">En u wesen is <rhyme label="c" type="f" corresp="#s15:l5">onwancklijck</rhyme>.</l>
        <l id="s15:l7" met="4" type="+-">Vwe dagen ende <rhyme label="d" type="f">jaren</rhyme></l>
        <l id="s15:l8" met="4" type="+-">Onophoudelijck <rhyme label="d" type="f" corresp="#s15:l7">voortvaren</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="+-">De na-comers der <rhyme label="a" type="f">oprechten</rhyme></l>
        <l id="s16:l2" met="4" type="+-">Vwe wel-beminde <rhyme label="a" type="f" corresp="#s16:l1">knechten</rhyme></l>
        <l id="s16:l3" met="4" type="+-">Sullen woonen <rhyme label="b" type="m">veylichlijck</rhyme></l>
        <l id="s16:l4" met="4" type="+-">In u heylich <rhyme label="b" type="m" corresp="#s16:l3">coninckrijck</rhyme>.</l>
        <l id="s16:l5" met="4" type="+-">Sy die sullen zijn <rhyme label="c" type="f">geboren</rhyme></l>
        <l id="s16:l6" met="4" type="+-">Van u lieve <rhyme label="c" type="f" corresp="#s16:l5">uytvercoren</rhyme></l>
        <l id="s16:l7" met="4" type="+-">Suldy door u macht <rhyme label="d" type="f">verhoogen</rhyme></l>
        <l id="s16:l8" met="4" type="+-">En doen staen voor uwe <rhyme label="d" type="f" corresp="#s16:l7">oogen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">GOdts liefde is soo <rhyme label="a" type="f">krachtich</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Haer pijlen zijn soo <rhyme label="a" type="f" corresp="#s1:l1">machtich</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Dat sy het hert <rhyme label="b" type="m">door-wont</rhyme>.</l>
        <l id="s1:l4" met="3" type="-+">Natuere doet sy <rhyme label="c" type="f">sterven</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Ghenuchten doet sy <rhyme label="c" type="f" corresp="#s1:l4">derven</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">De ziel maeckt sy <rhyme label="b" type="m" corresp="#s1:l3">ghesont</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Godts liefde doet <rhyme label="a" type="f">vergeten</rhyme></l>
        <l id="s2:l2" met="3" type="-+">D'aertsch goet: en sy doet <rhyme label="a" type="f" corresp="#s2:l1">weten</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Hoe dat den gheest moet <rhyme label="b" type="m">staen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Gheduerich in <rhyme label="c" type="f">verlanghen</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Om Godt in hem <rhyme label="c" type="f" corresp="#s2:l4">t'ontfanghen</rhyme>;</l>
        <l id="s2:l6" met="3" type="-+">Sy-selven <rhyme label="b" type="m" corresp="#s2:l3">uyt-te-gaen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Godts liefde is soo <rhyme label="a" type="f">puere</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Dat sy de <rhyme label="a" type="f" corresp="#s3:l1">creatuere</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Een met den Schepper <rhyme label="b" type="m">maeckt</rhyme>.</l>
        <l id="s3:l4" met="3" type="-+">'T verstant dat moet <rhyme label="c" type="f">ontbreecken</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Gheen tongh en can't <rhyme label="c" type="f" corresp="#s3:l4">uyt-spreecken</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Hoe de ziel Godt <rhyme label="b" type="m" corresp="#s3:l3">ghenaeckt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Wie hier eens heeft <rhyme label="a" type="f">ghedroncken</rhyme>:</l>
        <l id="s4:l2" met="3" type="-+">Wie Godt eens heeft <rhyme label="a" type="f" corresp="#s4:l1">gheschoncken</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Den wijn der liefde <rhyme label="b" type="m">puer</rhyme>:</l>
        <l id="s4:l4" met="3" type="-+">Can niet ghenoch <rhyme label="c" type="f">verclaeren</rhyme></l>
        <l id="s4:l5" met="3" type="-+">'T gheen dat hem is <rhyme label="c" type="f" corresp="#s4:l4">ervaeren</rhyme>;</l>
        <l id="s4:l6" met="3" type="-+">Maer roept vol <rhyme label="b" type="m" corresp="#s4:l3">on-gheduer</rhyme>:</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Och! Wie sal my daer <rhyme label="a" type="f">thoonen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Mijn Lief, dat ick mach <rhyme label="a" type="f" corresp="#s5:l1">woonen</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Met hem vereenicht <rhyme label="b" type="m">zijn</rhyme>.</l>
        <l id="s5:l4" met="3" type="-+">Och! Ick heb hem <rhyme label="c" type="f">ghevonden</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Ick cust in sijne <rhyme label="c" type="f" corresp="#s5:l4">wonden</rhyme>:</l>
        <l id="s5:l6" met="3" type="-+">'K gheniete sijn <rhyme label="b" type="m" corresp="#s5:l3">aenschijn</rhyme>.</l>
      </lg>
    </lg>
  </text>

  <author>Jacob Rosant</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">G' Hebt d'Ouden hooren <rhyme label="a" type="f">leeren</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Gy en sult niet doodt <rhyme label="b" type="m">slaen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Of gy sult met <rhyme label="a" type="f" corresp="#s1:l1">verseeren</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Voor het gerechte <rhyme label="b" type="m" corresp="#s1:l2">staen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Maer ik segh u nogh <rhyme label="a" type="f">meede</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Die op sijn Broêr wordt <rhyme label="b" type="m">quaet</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Die schuldigh is <rhyme label="a" type="f" corresp="#s2:l1">alreede</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Dat hy voor 't Rechte <rhyme label="b" type="m" corresp="#s2:l2">staet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Maer die begint te <rhyme label="a" type="f">tieren</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Verdient den hoogen <rhyme label="b" type="m">Raet</rhyme>.</l>
        <l id="s3:l3" met="3" type="-+">Die geck seyt, 't helsche <rhyme label="a" type="f" corresp="#s3:l1">viere</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Verdient, dat hy 't in <rhyme label="b" type="m" corresp="#s3:l2">gaet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Komt gy met <rhyme label="a" type="f">offerhande</rhyme></l>
        <l id="s4:l2" met="3" type="-+">By d'Heyligen <rhyme label="b" type="m">Autaer</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">En 't komt in uw <rhyme label="a" type="f" corresp="#s4:l1">verstande</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Terwijl gy bent <rhyme label="b" type="m" corresp="#s4:l2">aldaer</rhyme>,</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Dat eenige <rhyme label="a" type="f">verschille</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Uw' Broeder tot u <rhyme label="b" type="m">heeft</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Laer daer uw' gifte <rhyme label="a" type="f" corresp="#s5:l1">stille</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Eer gy die Godt op <rhyme label="b" type="m" corresp="#s5:l2">geeft</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Gaet, stelt uw' Broêr te <rhyme label="a" type="f">vreede</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">En komt daer na dan <rhyme label="b" type="m">weer</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">En offert na de <rhyme label="a" type="f" corresp="#s6:l1">seede</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Uw' gifte aen den <rhyme label="b" type="m" corresp="#s6:l2">Heer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Gy moet ras <rhyme label="a" type="f">accordeeren</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Met uwe <rhyme label="b" type="m">weerparty</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Als gy in 't <rhyme label="a" type="f" corresp="#s7:l1">converseeren</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Nogh op den wegh bent <rhyme label="b" type="m" corresp="#s7:l2">vry</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Dat hy u aen 't <rhyme label="a" type="f">gereghte</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Niet geef, en die u <rhyme label="b" type="m">vat</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">En door sijn wreede <rhyme label="a" type="f" corresp="#s8:l1">kneghte</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Versteeke in een <rhyme label="b" type="m" corresp="#s8:l2">gat</rhyme>..</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Dat soudt gy moeten <rhyme label="a" type="f">geeven</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Den alderlesten <rhyme label="b" type="m">duyt</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Eer gy daer van uw' <rhyme label="a" type="f" corresp="#s9:l1">leeven</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Soudt konnen raken <rhyme label="b" type="m" corresp="#s9:l2">uyt</rhyme>.</l>
      </lg>
    </lg>
  </text>

<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>21384</id>
    <date>
      <year-start>1591</year-start>
      <year-end>1592</year-end>
    </date>
    <tags>
      <tag standard-name="schriftuurlijk lied" translation="scripture song">schriftuurlijk lied</tag>
      <tag standard-name="vermaanlied" translation="admonitory song">vermaanlied</tag>
    </tags>
    <melody>Een meisje op een riviertje zat</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Soetken Gerijts</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">MYn lieue vrienden <rhyme label="a" type="m">allegaer</rhyme>,</l>
        <l id="s1:l2" met="2" type="-+">Bidt waeckt <rhyme label="a" type="m" corresp="#s1:l1">eenpaer</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Den dach des Heren die <rhyme label="b" type="f">naect</rhyme></l>
        <l id="s1:l4" met="2" type="-+">Dat blijckt wel <rhyme label="a" type="m" corresp="#s1:l1">claer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Waert mogelijc so als Christus seyt als <rhyme label="a" type="m">nu</rhyme></l>
        <l id="s2:l2" met="2" type="-+">Hoort dit <rhyme label="a" type="m" corresp="#s2:l1">bescheyt</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Gods wtuercoren die souden <rhyme label="b" type="f">worden</rhyme></l>
        <l id="s2:l4" met="2" type="-+">In dwalinghe <rhyme label="a" type="m" corresp="#s2:l1">gheleyt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Dit is nu den tijt also men <rhyme label="a" type="m">siet</rhyme></l>
        <l id="s3:l2" met="2" type="-+">Daer is <rhyme label="a" type="m" corresp="#s3:l1">gheschiet</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Een schueringe so wy hebben <rhyme label="b" type="f">vernomen</rhyme></l>
        <l id="s3:l4" met="2" type="-+">Met groot <rhyme label="a" type="m" corresp="#s3:l1">verdriet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Sy hebbent een paert wat plomp <rhyme label="a" type="m">gemaeckt</rhyme></l>
        <l id="s4:l2" met="2" type="-+">Och vrienden <rhyme label="a" type="m" corresp="#s4:l1">waeckt</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Daer is nu weder op die <rhyme label="b" type="f">bane</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">Wat anders <rhyme label="a" type="m" corresp="#s4:l1">gheraeckt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Dat wil nu hebben een schoonder <rhyme label="a" type="m">schijn</rhyme></l>
        <l id="s5:l2" met="2" type="-+">Al isset niet <rhyme label="a" type="m" corresp="#s5:l1">fijn</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Men cant wel met gods waerheyt <rhyme label="b" type="f">bewijsen</rhyme></l>
        <l id="s5:l4" met="2" type="-+">Onrecht te <rhyme label="a" type="m" corresp="#s5:l1">zijn</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ghy sult niet haten in v <rhyme label="a" type="m">hert</rhyme></l>
        <l id="s6:l2" met="2" type="-+">Uwen Broeder <rhyme label="a" type="m" corresp="#s6:l1">expert</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Maer straffen v naesten op dat ghy om <rhyme label="b" type="f">hem</rhyme></l>
        <l id="s6:l4" met="2" type="-+">Niet schuldich en <rhyme label="a" type="m" corresp="#s6:l1">wert</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Dit leert ons god door moyses <rhyme label="a" type="m">hoort</rhyme></l>
        <l id="s7:l2" met="2" type="-+">Gaet alsoo <rhyme label="a" type="m" corresp="#s7:l1">voort</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Faem rouen voor straffen mach niet <rhyme label="b" type="f">bestaen</rhyme></l>
        <l id="s7:l4" met="2" type="-+">Tis teghen Gods <rhyme label="a" type="m" corresp="#s7:l1">woort</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Die wonden des liefhebbers zijn <rhyme label="a" type="m">getrou</rhyme></l>
        <l id="s8:l2" met="2" type="-+">Hoort mannen en <rhyme label="a" type="m" corresp="#s8:l1">vrou</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Bedriechelijck is dat cussen des <rhyme label="b" type="f">haters</rhyme></l>
        <l id="s8:l4" met="2" type="-+">So ick <rhyme label="a" type="m" corresp="#s8:l1">aenschou</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Niet vrienden dat ic dit aenscho <rhyme label="a" type="m">alleen</rhyme></l>
        <l id="s9:l2" met="2" type="-+">Het is Salomons <rhyme label="a" type="m" corresp="#s9:l1">reen</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Prouerbijc in zijn <rhyme label="b" type="f">seuenentwintichste</rhyme></l>
        <l id="s9:l4" met="2" type="-+">Leest ghy het <rhyme label="a" type="m" corresp="#s9:l1">ghemeen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Voort in dat nieuwe <rhyme label="a" type="m">Testament</rhyme></l>
        <l id="s10:l2" met="2" type="-+">Ist breet <rhyme label="a" type="m" corresp="#s10:l1">gheprent</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Hoe datmen zijn broeder moet straffen, <rhyme label="b" type="f">vermanen</rhyme></l>
        <l id="s10:l4" met="2" type="-+">Al eermen hem <rhyme label="a" type="m" corresp="#s10:l1">schent</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Die broederlijc aenspreck moet <rhyme label="a" type="m">gheschien</rhyme></l>
        <l id="s11:l2" met="2" type="-+">Matheus <rhyme label="a" type="m" corresp="#s11:l1">achtien</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Op dat zijn siele mach worden <rhyme label="b" type="f">gewonnen</rhyme></l>
        <l id="s11:l4" met="2" type="-+">Wilt hier op <rhyme label="a" type="m" corresp="#s11:l1">sien</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Dat hy tot boete mach worden <rhyme label="a" type="m">verweckt</rhyme></l>
        <l id="s12:l2" met="2" type="-+">Voort Petrus <rhyme label="a" type="m" corresp="#s12:l1">spreckt</rhyme></l>
        <l id="s12:l3" met="4" type="-+">Als dat die liefde der <rhyme label="b" type="f">sonden</rhyme></l>
        <l id="s12:l4" met="2" type="-+">Menichfout <rhyme label="a" type="m" corresp="#s12:l1">bedeckt</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Maer die dan sterft wt hatich <rhyme label="a" type="m">list</rhyme></l>
        <l id="s13:l2" met="2" type="-+">Nae soeckt en <rhyme label="a" type="m" corresp="#s13:l1">vist</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Die liefde begrijpt niet so Paulus <rhyme label="b" type="f">seyt</rhyme></l>
        <l id="s13:l4" met="2" type="-+">Denckt hoe men dan <rhyme label="a" type="m" corresp="#s13:l1">mist</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Het goet wort quaet na haer <rhyme label="a" type="m">v'stant</rhyme></l>
        <l id="s14:l2" met="2" type="-+">Haer eere wort <rhyme label="a" type="m" corresp="#s14:l1">schant</rhyme></l>
        <l id="s14:l3" met="4" type="-+">Och vrienden laet ons eenuuldich <rhyme label="b" type="f">blijuen</rhyme></l>
        <l id="s14:l4" met="2" type="-+">In Godt <rhyme label="a" type="m" corresp="#s14:l1">gheplant</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Een yeghelijck so zijn roep <rhyme label="a" type="m">betaemt</rhyme></l>
        <l id="s15:l2" met="2" type="-+">Hier wel op <rhyme label="a" type="m" corresp="#s15:l1">raemt</rhyme></l>
        <l id="s15:l3" met="4" type="-+">Op dat wy moghen een Christen <rhyme label="b" type="f">wesen</rhyme></l>
        <l id="s15:l4" met="2" type="-+">Met recht <rhyme label="a" type="m" corresp="#s15:l1">ghenaemt</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Mijn lieue vrienden ick schenc v <rhyme label="a" type="m">dit</rhyme></l>
        <l id="s16:l2" met="2" type="-+">Voor my toch <rhyme label="a" type="m" corresp="#s16:l1">bidt</rhyme></l>
        <l id="s16:l3" met="4" type="-+">Bidt oock voor die onwentenden <rhyme label="b" type="f">dwalen</rhyme></l>
        <l id="s16:l4" met="2" type="-+">Godt die hooch <rhyme label="a" type="m" corresp="#s16:l1">sit</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

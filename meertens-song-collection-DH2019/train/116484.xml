    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Claes Stapel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">IK ben de aarde <rhyme label="a" type="m">moe</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Den Heemel lacht my <rhyme label="a" type="m" corresp="#s1:l1">toe</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Nu ik leg op mijn <rhyme label="b" type="f">sterven</rhyme>;</l>
        <l id="s1:l4" met="3" type="-+">Want Goodes <rhyme label="c" type="m">Heemel-rijk</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Is eeuwig <rhyme label="c" type="m" corresp="#s1:l4">eeuwiglijk</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Mijn lot, mijn deel, mijn <rhyme label="b" type="f" corresp="#s1:l3">erven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ik heb nu met <rhyme label="a" type="m">geduld</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Mijns leevens loop <rhyme label="a" type="m" corresp="#s2:l1">vervuld</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Nu, nu zal ik <rhyme label="b" type="f">ontfangen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Des leevens-rijke <rhyme label="c" type="m">kroon</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Van Iesus Goodes <rhyme label="c" type="m" corresp="#s2:l4">Zoon</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Daar ik zeer naa <rhyme label="b" type="f" corresp="#s2:l3">verlange</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ach! hoe gloeid my mijn <rhyme label="a" type="m">borst</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Van God'lijk-vuur, my <rhyme label="a" type="m" corresp="#s3:l1">dorst</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Naa mijne God en <rhyme label="b" type="f">Kooning</rhyme>:</l>
        <l id="s3:l4" met="3" type="-+">Wanneer of ik zal <rhyme label="c" type="m">zijn</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Daar ik zijn zoet <rhyme label="c" type="m" corresp="#s3:l4">aanschijn</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Zal zien in zijne <rhyme label="b" type="f" corresp="#s3:l3">wooning</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">'t Wit glinst'rend Bruilofs <rhyme label="a" type="m">kleed</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Leid my daar al <rhyme label="a" type="m" corresp="#s4:l1">gereed</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Om in s' <rhyme label="b" type="f">Lams-avond-maalen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Te nutten <rhyme label="c" type="m">Heemel-spijs</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Op Goddelijke <rhyme label="c" type="m" corresp="#s4:l4">wijs</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">In zijn gewijde <rhyme label="b" type="f" corresp="#s4:l3">zaalen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Daar 't gantze <rhyme label="a" type="m">Engeldom</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Zich leg'ren zal al <rhyme label="a" type="m" corresp="#s5:l1">om</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Met Goddelijke <rhyme label="b" type="f">klanken</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Zoo dat Gods <rhyme label="c" type="m">heilig-huis</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Vervuld werd van 't <rhyme label="c" type="m" corresp="#s5:l4">gedruis</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Voor 't looven ende <rhyme label="b" type="f" corresp="#s5:l3">danken</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Het is of ik schier <rhyme label="a" type="m">hoor</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Al klinken in mijn <rhyme label="a" type="m" corresp="#s6:l1">oor</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Het choor gezang der <rhyme label="b" type="f">Eng'len</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Die om Gods gouden <rhyme label="c" type="m">throon</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">En die van zijnen <rhyme label="c" type="m" corresp="#s6:l4">Zoon</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Al zinggend' heenen <rhyme label="b" type="f" corresp="#s6:l3">heng'len</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Daar 't al de vroome <rhyme label="a" type="m">li'en</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Verheer'lijkt dan zal <rhyme label="a" type="m" corresp="#s7:l1">zien</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">En eeuwelijk <rhyme label="b" type="f">genieten</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Haar vriendelijk <rhyme label="c" type="m">aanschijn</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">En by de Eng'len <rhyme label="c" type="m" corresp="#s7:l4">zijn</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Daar 's leevens stroom zal <rhyme label="b" type="f" corresp="#s7:l3">vlieten</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Daar w' onder het <rhyme label="a" type="m">beleid</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Van Iesus <rhyme label="a" type="m" corresp="#s8:l1">heen-geleid</rhyme></l>
        <l id="s8:l3" met="3" type="-+">In 't wit dan zullen <rhyme label="b" type="f">treeden</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">En drinken uit Gods <rhyme label="c" type="m">bron</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">En blinken als de <rhyme label="c" type="m" corresp="#s8:l4">zon</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">In aller <rhyme label="b" type="f" corresp="#s8:l3">eeuwigheeden</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Al-waar zal zijn <rhyme label="a" type="m">present</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Die aan-vang heeft noch <rhyme label="a" type="m" corresp="#s9:l1">end</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Gods heilig lief'lijk <rhyme label="b" type="f">weezen</rhyme>.</l>
        <l id="s9:l4" met="3" type="-+">Och! dit is my <rhyme label="c" type="m">beloofd</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">En elk die recht <rhyme label="c" type="m" corresp="#s9:l4">geloofd</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Wie zou dan God niet <rhyme label="b" type="f" corresp="#s9:l3">vreezen</rhyme>,</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">En Iesus zijnen <rhyme label="a" type="m">Zoon</rhyme>?</l>
        <l id="s10:l2" met="3" type="-+">Niet gaarne spot en <rhyme label="a" type="m" corresp="#s10:l1">hoon</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Om wel-doens wille, <rhyme label="b" type="f">lijden</rhyme>?</l>
        <l id="s10:l4" met="3" type="-+">Daar God hier, op de <rhyme label="c" type="m">deugd</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Onz hert geeft zulken <rhyme label="c" type="m" corresp="#s10:l4">vreugd</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">En eeuw'lijk wil <rhyme label="b" type="f" corresp="#s10:l3">verblijden</rhyme>?</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">O! Iesus mijn <rhyme label="a" type="m">vriend</rhyme>!</l>
        <l id="s11:l2" met="3" type="-+">U heb ik hier <rhyme label="a" type="m" corresp="#s11:l1">gediend</rhyme></l>
        <l id="s11:l3" met="3" type="-+">En vuurig <rhyme label="b" type="f">aan-gehangen</rhyme>.</l>
        <l id="s11:l4" met="3" type="-+">Mijn <rhyme label="c" type="m">Heemel-Bruidegom</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Kom nu, o Iesus <rhyme label="c" type="m" corresp="#s11:l4">kom</rhyme>!</l>
        <l id="s11:l6" met="3" type="-+">En wild mijn geest <rhyme label="b" type="f" corresp="#s11:l3">ontfangen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Gy zijt zoo vol <rhyme label="a" type="m">goedheid</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Dat G' ons hebt in <rhyme label="a" type="m" corresp="#s12:l1">gewijs</rhyme></l>
        <l id="s12:l3" met="3" type="-+">Gods rijk vol <rhyme label="b" type="f">zaaligheeden</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Iaa met uw eigen <rhyme label="c" type="m">vloed</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">En hebt my met uw <rhyme label="c" type="m" corresp="#s12:l4">voet</rhyme></l>
        <l id="s12:l6" met="3" type="-+">De door'nen plat <rhyme label="b" type="f" corresp="#s12:l3">getreeden</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Mijn vlees voeld wel <rhyme label="a" type="m">ellend</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Maar my is ook <rhyme label="a" type="m" corresp="#s13:l1">bekend</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Dat u meer quaad quam <rhyme label="b" type="f">deeren</rhyme>.</l>
        <l id="s13:l4" met="3" type="-+">Daar gy aan 't kruis naakt <rhyme label="c" type="m">hingt</rhyme></l>
        <l id="s13:l5" met="3" type="-+">En gal tot drank <rhyme label="c" type="m" corresp="#s13:l4">ontfingt</rhyme></l>
        <l id="s13:l6" met="3" type="-+">Rust ik op zachte <rhyme label="b" type="f" corresp="#s13:l3">veeren</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Doch 'k leg en <rhyme label="a" type="m">ziele-toog</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Mijn geest die wil om <rhyme label="a" type="m" corresp="#s14:l1">hoog</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Naa u strekt haar <rhyme label="b" type="f">verlangen</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">Ach! Iesus goede <rhyme label="c" type="m">Heer</rhyme>,</l>
        <l id="s14:l5" met="3" type="-+">Vol Majestait, vol <rhyme label="c" type="m" corresp="#s14:l4">eer</rhyme>,</l>
        <l id="s14:l6" met="3" type="-+">Wild nu mijn geest <rhyme label="b" type="f" corresp="#s14:l3">ont-fangen</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Ick leg en haal en <rhyme label="a" type="m">hijg</rhyme>,</l>
        <l id="s15:l2" met="3" type="-+">En schier geen adem <rhyme label="a" type="m" corresp="#s15:l1">krijg</rhyme>,</l>
        <l id="s15:l3" met="3" type="-+">Laat my uw gunst <rhyme label="b" type="f">verwerven</rhyme>.</l>
        <l id="s15:l4" met="3" type="-+">Die re'en van kom ach <rhyme label="c" type="m">Heer</rhyme>!</l>
        <l id="s15:l5" met="3" type="-+">Wil my als meer en <rhyme label="c" type="m" corresp="#s15:l4">meer</rhyme></l>
        <l id="s15:l6" met="3" type="-+">In mijnen mond <rhyme label="b" type="f" corresp="#s15:l3">besterven</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="3" type="-+">Zoo 't u beliefd treed <rhyme label="a" type="m">aan</rhyme>,</l>
        <l id="s16:l2" met="3" type="-+">Ach wilt mijn geest <rhyme label="a" type="m" corresp="#s16:l1">ontfa'en</rhyme>,</l>
        <l id="s16:l3" met="3" type="-+">Ach wildze toch <rhyme label="b" type="f">ontbinden</rhyme></l>
        <l id="s16:l4" met="3" type="-+">Van dit ellendig <rhyme label="c" type="m">vleis</rhyme>,</l>
        <l id="s16:l5" met="3" type="-+">Dat zy mag gaan op <rhyme label="c" type="m" corresp="#s16:l4">reis</rhyme></l>
        <l id="s16:l6" met="3" type="-+">Om u mijn Heer te <rhyme label="b" type="f" corresp="#s16:l3">vinden</rhyme>!</l>
      </lg>
    </lg>
  </text>
</song>

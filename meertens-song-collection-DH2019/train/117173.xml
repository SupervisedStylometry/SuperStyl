  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Laat de vreugd het hert <rhyme label="a" type="f">ontsluiten</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Roemende Gods <rhyme label="b" type="m">heerlijkheidt</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Laat de stemmen zamen <rhyme label="a" type="f" corresp="#s1:l1">uiten</rhyme></l>
        <l id="s1:l4" met="4" type="+-">’s Hemels wijs, en hoog <rhyme label="b" type="m" corresp="#s1:l2">beleidtl</rhyme></l>
        <l id="s1:l5" met="4" type="+-">Aller dingen eynd’ en <rhyme label="c" type="m">standt</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Wordt bestuurt door ’s Heeren <rhyme label="c" type="m" corresp="#s1:l5">handt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Godt die komt twee zielen! <rhyme label="a" type="f">voegen</rhyme></l>
        <l id="s2:l2" met="4" type="+-">In de Echt, en maaktze <rhyme label="b" type="m">een</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Tot haar onderling <rhyme label="a" type="f" corresp="#s2:l1">genoegen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Geest en lichaam wordt <rhyme label="b" type="m" corresp="#s2:l2">gemeen</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Allerzoetste <rhyme label="c" type="m">eenigheydt</rhyme>!</l>
        <l id="s2:l6" met="4" type="+-">Tot haar beyder troost <rhyme label="c" type="m" corresp="#s2:l5">bereydt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Twee in-een-vlochten <rhyme label="a" type="f">herten</rhyme>!</l>
        <l id="s3:l2" met="4" type="+-">Vast gemaakt in <rhyme label="b" type="m">d’Echte-bandt</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Voorspoeds dagen ramp en <rhyme label="a" type="f" corresp="#s3:l1">smerten</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Raken beyd’ <rhyme label="b" type="m" corresp="#s3:l2">gelijkerhandt</rhyme>:</l>
        <l id="s3:l5" met="4" type="+-">Vreugde, droefheydt, zuur of <rhyme label="c" type="m">zoet</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Dragen zy met een <rhyme label="c" type="m" corresp="#s3:l5">gemoedt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Godt komt zijnen milden <rhyme label="a" type="f">zegen</rhyme>!</l>
        <l id="s4:l2" met="4" type="+-">Storten over zulken <rhyme label="b" type="m">paar</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Dat zich voegt na zijne <rhyme label="a" type="f" corresp="#s4:l1">wegen</rhyme>:</l>
        <l id="s4:l4" met="4" type="+-">Hy doet schijnen over <rhyme label="b" type="m" corresp="#s4:l2">haar</rhyme></l>
        <l id="s4:l5" met="4" type="+-">Zijn genadig <rhyme label="c" type="m">aangezicht</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">En geeft in haar wandel <rhyme label="c" type="m" corresp="#s4:l5">licht</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Dit is onzes herten <rhyme label="a" type="f">wenschen</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Aan de Bruidegom en <rhyme label="b" type="m">Bruidt</rhyme>!</l>
        <l id="s5:l3" met="4" type="+-">Twee van Godt geliefde <rhyme label="a" type="f" corresp="#s5:l1">menschen</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Die u in dien bandt <rhyme label="b" type="m" corresp="#s5:l2">besluit</rhyme>:</l>
        <l id="s5:l5" met="4" type="+-">Zy met u, en doe u <rhyme label="c" type="m">goedt</rhyme>;</l>
        <l id="s5:l6" met="4" type="+-">Als hy zijne kind’ren <rhyme label="c" type="m" corresp="#s5:l5">doet</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Godt! de Algenoegzaam <rhyme label="a" type="f">Vader</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Stut uw staat! en, bouw uw <rhyme label="b" type="m">huis</rhyme>!</l>
        <l id="s6:l3" met="4" type="+-">Aller vreugd’ en goed’ren <rhyme label="a" type="f" corresp="#s6:l1">ader</rhyme>!</l>
        <l id="s6:l4" met="4" type="+-">Weer, of zegen, druk en <rhyme label="b" type="m" corresp="#s6:l2">kruis</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Ook al wat u hier <rhyme label="c" type="m">ontmoet</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Keert hy tot uw beyder <rhyme label="c" type="m" corresp="#s6:l5">goedt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Godt wil uw nu zamen <rhyme label="a" type="f">binden</rhyme></l>
        <l id="s7:l2" met="4" type="+-">In den bandt van Iezus <rhyme label="b" type="m">Trouw</rhyme>!</l>
        <l id="s7:l3" met="4" type="+-">Daar gy troost en heyl moogt <rhyme label="a" type="f" corresp="#s7:l1">vinden</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Dit verbondt heeft geen <rhyme label="b" type="m" corresp="#s7:l2">berouw</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">O hoe zalig is de <rhyme label="c" type="m">Bruidt</rhyme>!</l>
        <l id="s7:l6" met="4" type="+-">Die met Iezus ‘t huw’lijk <rhyme label="c" type="m" corresp="#s7:l5">sluit</rhyme>!</l>
      </lg>
    </lg>
  </text>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Aen u Christelijcke <rhyme label="a" type="m">Jeucht</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Door Gods Geest van nieuws <rhyme label="b" type="f">herbooren</rhyme>:</l>
        <l id="s1:l3" met="4" type="+-">Rechte Minnaers, van - - - de <rhyme label="a" type="m" corresp="#s1:l1">Deucht</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Lievers om wat nieuws te <rhyme label="b" type="f" corresp="#s1:l2">hooren</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">Voor u brengh ick we'er - - - te voo - - <rhyme label="b" type="f" corresp="#s1:l2">ren</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Nieu Gedicht, 't wert u <rhyme label="c" type="m">vereert</rhyme>.</l>
        <l id="s1:l7" met="4" type="+-">Soete Jeucht 't zijn sulcke <rhyme label="d" type="f">saecken</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Om dien Ziele te <rhyme label="d" type="f" corresp="#s1:l7">vermaecken</rhyme>,</l>
        <l id="s1:l9" met="4" type="+-">Die het hooghste Goedt <rhyme label="c" type="m" corresp="#s1:l6">begheert</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">'t Is mijn Ziel een groote <rhyme label="a" type="m">vreucht</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Als ick sie de frisse <rhyme label="b" type="f">leden</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">In het groenste van haer <rhyme label="a" type="m" corresp="#s2:l1">Jeucht</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Aen des Heeren Tafel <rhyme label="b" type="f" corresp="#s2:l2">treden</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Want Jer'mia seyt met <rhyme label="b" type="f" corresp="#s2:l2">reden</rhyme></l>
        <l id="s2:l6" met="4" type="+-">'t Is seer fijn, en 't Godt <rhyme label="c" type="m">behaeght</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Dat de Jeucht het Jock des <rhyme label="d" type="f">Heeren</rhyme></l>
        <l id="s2:l8" met="4" type="+-">Waerdigh acht, en houdt in <rhyme label="d" type="f" corresp="#s2:l7">eeren</rhyme>,</l>
        <l id="s2:l9" met="4" type="+-">En met groote vreuchde <rhyme label="c" type="m" corresp="#s2:l6">draeght</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Lieve Jeucht, dien schoonen <rhyme label="a" type="m">last</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Dient seer wel van u <rhyme label="b" type="f">gedraghen</rhyme>:</l>
        <l id="s3:l3" met="4" type="+-">Die op stercke schouders <rhyme label="a" type="m" corresp="#s3:l1">past</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Die niet lichtelijck <rhyme label="b" type="f" corresp="#s3:l2">vertraghen</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Laer een luyen Suffert <rhyme label="b" type="f" corresp="#s3:l2">klaghen</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Die daer heeft een Slaefs <rhyme label="c" type="m">gemoedt</rhyme>:</l>
        <l id="s3:l7" met="4" type="+-">Maer de lusten van Godts <rhyme label="d" type="f">Kind'ren</rhyme></l>
        <l id="s3:l8" met="4" type="+-">Door het draghen niet <rhyme label="d" type="f" corresp="#s3:l7">vermind'ren</rhyme>:</l>
        <l id="s3:l9" met="4" type="+-">Want sy zijn van Edel <rhyme label="c" type="m" corresp="#s3:l6">bloedt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">O ! ghy Goddelijck <rhyme label="a" type="m">gheslacht</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Dat uyt-munst in re'en, en <rhyme label="b" type="f">zeden</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Die u al te waerdigh <rhyme label="a" type="m" corresp="#s4:l1">acht</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Op den breeden Wech te <rhyme label="b" type="f" corresp="#s4:l2">treden</rhyme>:</l>
        <l id="s4:l5" met="4" type="+-">Want ghy voeght u na de <rhyme label="b" type="f" corresp="#s4:l2">reden</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Op gheen snoo ghewoonte <rhyme label="c" type="m">past</rhyme></l>
        <l id="s4:l7" met="4" type="+-">Van de Jeucht, die nu met <rhyme label="d" type="f">hoopen</rhyme></l>
        <l id="s4:l8" met="4" type="+-">Ruym-schoots na de Hel toe <rhyme label="d" type="f" corresp="#s4:l7">loopen</rhyme>,</l>
        <l id="s4:l9" met="4" type="+-">En verachten 's Heeren <rhyme label="c" type="m" corresp="#s4:l6">last</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Acht dit voor u eer te <rhyme label="a" type="m">zijn</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Als sy uwe lust <rhyme label="b" type="f">bespotten</rhyme>:</l>
        <l id="s5:l3" met="4" type="+-">Laeft u Ziel met suyv're <rhyme label="a" type="m" corresp="#s5:l1">Wijn</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Laet de draf voor yd'le <rhyme label="b" type="f" corresp="#s5:l2">Sotten</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">Laet sy vry te samen <rhyme label="b" type="f" corresp="#s5:l2">rotten</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Op haer wijse vrolijck <rhyme label="c" type="m">zijn</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Met haer danssen, dertel <rhyme label="d" type="f">singhen</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">Spelen, snappen, yd'le <rhyme label="d" type="f" corresp="#s5:l7">dinghen</rhyme>,</l>
        <l id="s5:l9" met="4" type="+-">Voeden soo haer Ziels <rhyme label="c" type="m" corresp="#s5:l6">fenijn</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Ghy hebt lust van 's Heeren <rhyme label="a" type="m">Woort</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Staegh te spreken, singhen, <rhyme label="b" type="f">lesen</rhyme>:</l>
        <l id="s6:l3" met="4" type="+-">U en de Werelt niet <rhyme label="a" type="m" corresp="#s6:l1">bekoort</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Ghy en wilt haer Vriendt niet <rhyme label="b" type="f" corresp="#s6:l2">wesen</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Ja, gaet haer als Vyandt <rhyme label="b" type="f" corresp="#s6:l2">vreesen</rhyme>:</l>
        <l id="s6:l6" met="4" type="+-">Want ghy kent haer valsch <rhyme label="c" type="m">fenijn</rhyme>.</l>
        <l id="s6:l7" met="4" type="+-">Ed'le herten, <rhyme label="d" type="f">Sonde-mijders</rhyme>,</l>
        <l id="s6:l8" met="4" type="+-">Kloecke Helden, Vrome <rhyme label="d" type="f" corresp="#s6:l7">Strijders</rhyme>,</l>
        <l id="s6:l9" met="4" type="+-">Ghy sult Overwinners <rhyme label="c" type="m" corresp="#s6:l6">zijn</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Want u krachten wassen <rhyme label="a" type="m">aen</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Door u yver, en <rhyme label="b" type="f">Ghebeden</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Ghy leert d'Engen Wech te <rhyme label="a" type="m" corresp="#s7:l1">gaen</rhyme>.</l>
        <l id="s7:l4" met="4" type="+-">Oeffent staegh u frisse <rhyme label="b" type="f" corresp="#s7:l2">leden</rhyme>:</l>
        <l id="s7:l5" met="4" type="+-">Door u stichtelijcke <rhyme label="b" type="f" corresp="#s7:l2">reden</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Port den een, dan a'er ter <rhyme label="c" type="m">deucht</rhyme>.</l>
        <l id="s7:l7" met="4" type="+-">Waerde Schatten, held're <rhyme label="d" type="f">Lichten</rhyme>,</l>
        <l id="s7:l8" met="4" type="+-">Aen u gheef ick mijn <rhyme label="d" type="f" corresp="#s7:l7">Gedichten</rhyme>:</l>
        <l id="s7:l9" met="4" type="+-">Gods Geliefde, waerde <rhyme label="c" type="m" corresp="#s7:l6">Jeucht</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

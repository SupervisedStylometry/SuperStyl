    <melody>O Herr Gott begnade mich</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">NEycht Heer u ooren, en verhoort <rhyme label="a" type="m">my</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Ick ben allendich, en arm daer <rhyme label="a" type="m" corresp="#s1:l1">by</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Bewaert mijn Siel van het <rhyme label="b" type="f">boose</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Want van u ben ick <rhyme label="b" type="f" corresp="#s1:l3">wtghecoosen</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">Mijn Godt helpt uwen knecht die <rhyme label="c" type="m">hem</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Op u verlaet, en die met zijn <rhyme label="c" type="m" corresp="#s1:l5">stem</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Tot u roept: Heer wilt oock <rhyme label="d" type="f">ontfermen</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">En troosten de Siel van u <rhyme label="d" type="f" corresp="#s1:l7">Armen</rhyme>:</l>
        <l id="s1:l9" met="4" type="-+">Mijn Siele ophef ick Heer tot <rhyme label="e" type="m">u</rhyme>,</l>
        <l id="s1:l10" met="4" type="-+">Want ghy zijt goet, en bermhertich <rhyme label="e" type="m" corresp="#s1:l9">nu</rhyme>,</l>
        <l id="s1:l11" met="4" type="+-">En saechtmoedich allen den <rhyme label="f" type="m">ghenen</rhyme>,</l>
        <l id="s1:l12" met="4" type="-+">Die u ghetrouwelijck <rhyme label="f" type="m" corresp="#s1:l11">aenroepen</rhyme>,</l>
        <l id="s1:l13" met="3" type="-+">Mijn Godt verhoort doch mijn <rhyme label="g" type="f">bidden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Aenmerct de stem mijns biddens o <rhyme label="a" type="m">Godt</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Ick roep tot u, in tijdt van <rhyme label="a" type="m" corresp="#s2:l1">noodt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">En als mijn lijden wilt <rhyme label="b" type="f">vermeeren</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Dan verhoorde ghy my <rhyme label="b" type="f" corresp="#s2:l3">Heere</rhyme>:</l>
        <l id="s2:l5" met="4" type="-+">Onder den Goden is u niemandts <rhyme label="c" type="m">glijck</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Met allen hun doen, so groot noch so <rhyme label="c" type="m" corresp="#s2:l5">rijck</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Daerom sullen voor u <rhyme label="d" type="f">treden</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Alle Heyden, en u <rhyme label="d" type="f" corresp="#s2:l7">aenbeden</rhyme>,</l>
        <l id="s2:l9" met="4" type="-+">En uwen name gheuen de <rhyme label="e" type="m">eer</rhyme>,</l>
        <l id="s2:l10" met="4" type="-+">Want ghy zijt groot, ghy doet wonder, <rhyme label="e" type="m" corresp="#s2:l9">Heer</rhyme>,</l>
        <l id="s2:l11" met="4" type="+-">Ghy zijt alleen Godt in <rhyme label="f" type="m">eewicheyt</rhyme>:</l>
        <l id="s2:l12" met="4" type="-+">Leydt my Heer op uwen wech <rhyme label="f" type="m" corresp="#s2:l11">bereyt</rhyme>,</l>
        <l id="s2:l13" met="3" type="-+">Dat ick in u waerheyt mach <rhyme label="g" type="f">wandlen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Mijn hert verblijdt, en het vreest <rhyme label="a" type="m">seer</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Uwen naem, dies danck ick u, o <rhyme label="a" type="m" corresp="#s3:l1">Heer</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Mijn Godt, van gheheelder <rhyme label="b" type="f">herten</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Want ghy verlost my wt <rhyme label="b" type="f" corresp="#s3:l3">smerten</rhyme>:</l>
        <l id="s3:l5" met="4" type="-+">Ick prijs uwen name eewlijck <rhyme label="c" type="m">vry</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">U goetheyt die is groot ouer <rhyme label="c" type="m" corresp="#s3:l5">my</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Mijn Siel hebt ghy verlost <rhyme label="d" type="f">snelle</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Wt het diepste vander <rhyme label="d" type="f" corresp="#s3:l7">helle</rhyme>:</l>
        <l id="s3:l9" met="4" type="-+">De stouten die stellen hun o <rhyme label="e" type="m">Godt</rhyme>,</l>
        <l id="s3:l10" met="4" type="-+">Teghen my, en die machtighe <rhyme label="e" type="m" corresp="#s3:l9">rodt</rhyme>,</l>
        <l id="s3:l11" met="4" type="+-">Mijnder Sielen sy naegaen, <rhyme label="f" type="m">siet</rhyme>,</l>
        <l id="s3:l12" met="4" type="-+">Dat sy u voor ooghen en hebben <rhyme label="f" type="m" corresp="#s3:l11">niet</rhyme>,</l>
        <l id="s3:l13" met="3" type="-+">Noch en vreesen u <rhyme label="g" type="f">daeromme</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Maer Heer Godt ghy zijt <rhyme label="a" type="m">bermhertich</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Ghenadich, en seer <rhyme label="a" type="m" corresp="#s4:l1">lanckmoedich</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">U goetheyt die groot is <rhyme label="b" type="f">seere</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Die behoede my altijts <rhyme label="b" type="f" corresp="#s4:l3">Heere</rhyme>:</l>
        <l id="s4:l5" met="4" type="-+">Keert u tot my, ontfermt u <rhyme label="c" type="m">mijn</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Gheeft uwen knecht u sterckheyt <rhyme label="c" type="m" corresp="#s4:l5">fijn</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Helpt uws Maechts Soon <rhyme label="d" type="f">beuesten</rhyme>:</l>
        <l id="s4:l8" met="3" type="-+">En doet aen my het <rhyme label="d" type="f" corresp="#s4:l7">beste</rhyme>,</l>
        <l id="s4:l9" met="4" type="-+">Teecken: op dat het <rhyme label="e" type="m">vernemen</rhyme>,</l>
        <l id="s4:l10" met="4" type="-+">(Die my haeten, en hun <rhyme label="e" type="m" corresp="#s4:l9">schamen</rhyme>)</l>
        <l id="s4:l11" met="4" type="+-">Dat ghy my bystaet, o Heer <rhyme label="f" type="m">Godt</rhyme>,</l>
        <l id="s4:l12" met="4" type="-+">En dat ghy my vertroost in mijnen <rhyme label="f" type="m" corresp="#s4:l11">noodt</rhyme>,</l>
        <l id="s4:l13" met="3" type="-+">Als ick u aenroepe, <rhyme label="g" type="f">Amen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

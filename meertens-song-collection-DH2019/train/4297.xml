    <melody>Grijp een moed gij edele jongelingen</melody>
    <categories>
      <category translation="formal genres">formele genres</category>
      <category translation="love and sex">liefde en seks</category>
      <category translation="emotions">emoties</category>
    </categories>
  <author>Pieter Lenaerts van der Goes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">WEerdighste <rhyme label="a" type="m">goet</rhyme> //</l>
        <l id="s1:l2" met="3" type="-+">Minsaem schoon ionge <rhyme label="b" type="f">vrouwe</rhyme> //</l>
        <l id="s1:l3" met="2" type="-+">Deurluchtich <rhyme label="a" type="m" corresp="#s1:l1">bloet</rhyme> //</l>
        <l id="s1:l4" met="3" type="-+">In als goet en <rhyme label="b" type="f" corresp="#s1:l2">getrouwe</rhyme> //</l>
        <l id="s1:l5" met="2" type="-+">Ghy zijt mijn <rhyme label="c" type="m">vreught</rhyme> //</l>
        <l id="s1:l6" met="2" type="-+">Ghy zijt mijn <rhyme label="c" type="m" corresp="#s1:l5">vreught</rhyme> //</l>
        <l id="s1:l7" met="3" type="-+">Want als ick u <rhyme label="b" type="f" corresp="#s1:l2">aenschouwe</rhyme> //</l>
        <l id="s1:l8" met="2" type="-+">Mijn hert <rhyme label="c" type="m" corresp="#s1:l5">verheught</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">In mijnen <rhyme label="a" type="m">sin</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Zijt ghy een reyn <rhyme label="b" type="f">goddinne</rhyme>:</l>
        <l id="s2:l3" met="2" type="-+">O soet <rhyme label="a" type="m" corresp="#s2:l1">gewin</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Daer ick rust by <rhyme label="b" type="f" corresp="#s2:l2">gewinne</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+"><rhyme label="c" type="m">Medecinael</rhyme>,</l>
        <l id="s2:l6" met="2" type="-+"><rhyme label="c" type="m" corresp="#s2:l5">Medecinael</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Weest my, deur uwe <rhyme label="b" type="f" corresp="#s2:l2">minne</rhyme>,</l>
        <l id="s2:l8" met="2" type="-+">Bloemken <rhyme label="c" type="m" corresp="#s2:l5">loyael</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Laet my met <rhyme label="a" type="m">u</rhyme></l>
        <l id="s3:l2" met="3" type="-+">In vrijheyt <rhyme label="b" type="f">converseren</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Niet anders <rhyme label="a" type="m" corresp="#s3:l1">nu</rhyme></l>
        <l id="s3:l4" met="3" type="-+">En is mijn <rhyme label="b" type="f" corresp="#s3:l2">supplieren</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">In uwer <rhyme label="c" type="m">hant</rhyme>,</l>
        <l id="s3:l6" met="2" type="-+">In uwer <rhyme label="c" type="m" corresp="#s3:l5">hant</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Staet al mijn aerdtsch <rhyme label="b" type="f" corresp="#s3:l2">geneiren</rhyme></l>
        <l id="s3:l8" met="2" type="-+">Seer vast <rhyme label="c" type="m" corresp="#s3:l5">geplant</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Lief ! die my <rhyme label="a" type="m">zijt</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Troostbaer, aen allen <rhyme label="b" type="f">sijden</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">Weest my <rhyme label="a" type="m" corresp="#s4:l1">altijt</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Een vrolick <rhyme label="b" type="f" corresp="#s4:l2">toevertijden</rhyme>:</l>
        <l id="s4:l5" met="2" type="-+">Voorseker <rhyme label="c" type="m">weet</rhyme>,</l>
        <l id="s4:l6" met="2" type="-+">Voorseker <rhyme label="c" type="m" corresp="#s4:l5">weet</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Ghy van mijn bitter <rhyme label="b" type="f" corresp="#s4:l2">lijden</rhyme></l>
        <l id="s4:l8" met="2" type="-+">Geheel <rhyme label="c" type="m" corresp="#s4:l5">t'secreet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Eylaes ! wat <rhyme label="a" type="m">est</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Als ghy my thoont dijn <rhyme label="b" type="f">toren</rhyme>,</l>
        <l id="s5:l3" met="2" type="-+">Ick ware <rhyme label="a" type="m" corresp="#s5:l1">best</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Van moeder <rhyme label="b" type="f" corresp="#s5:l2">ongeboren</rhyme></l>
        <l id="s5:l5" met="2" type="-+">Niet soo <rhyme label="c" type="m">verwoet</rhyme>,</l>
        <l id="s5:l6" met="2" type="-+">Niet soo <rhyme label="c" type="m" corresp="#s5:l5">verwoet</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Want ghy weet van te <rhyme label="b" type="f" corresp="#s5:l2">voren</rhyme>,</l>
        <l id="s5:l8" met="2" type="-+">Dat ghyt my <rhyme label="c" type="m" corresp="#s5:l5">doet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Mijn <rhyme label="a" type="m">liberael</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Princesse <rhyme label="b" type="f">wtgelesen</rhyme>,</l>
        <l id="s6:l3" met="2" type="-+">Wilt <rhyme label="a" type="m" corresp="#s6:l1">teenemael</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Mijn troost in allen <rhyme label="b" type="f" corresp="#s6:l2">wesen</rhyme>,</l>
        <l id="s6:l5" met="2" type="-+">V Prince <rhyme label="c" type="m">clouck</rhyme>,</l>
        <l id="s6:l6" met="2" type="-+">V Prince <rhyme label="c" type="m" corresp="#s6:l5">clouck</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Suldy seer haest <rhyme label="b" type="f" corresp="#s6:l2">genesen</rhyme>,</l>
        <l id="s6:l8" met="2" type="-+">Naer zijn <rhyme label="c" type="m" corresp="#s6:l5">versouck</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

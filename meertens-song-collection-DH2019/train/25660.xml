  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Lieve doch nae my <rhyme label="a" type="m">hoort</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">En wilt vaten een recht <rhyme label="b" type="m">verstant</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Van Gods stercke machtighe <rhyme label="b" type="m" corresp="#s1:l2">handt</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Over ons nae sijn <rhyme label="a" type="m" corresp="#s1:l1">woordt</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Petrus raedt ons dit <rhyme label="c" type="m">fijn</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Dat wy verootmoedighen <rhyme label="d" type="m">soo</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Daer onder dat wy moghen <rhyme label="d" type="m" corresp="#s1:l6">vroo</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Van hem verheven <rhyme label="c" type="m" corresp="#s1:l5">zijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ydel waer ons <rhyme label="a" type="m">bedrijf</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Ten waer dat wy dit leerden <rhyme label="b" type="m">vroet</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Nu van den Heere Christo <rhyme label="b" type="m" corresp="#s2:l2">soet</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Vernieut aen ziel en <rhyme label="a" type="m" corresp="#s2:l1">lijf</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Men moet hem volghen <rhyme label="c" type="m">naer</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Wil men met hem naemaels <rhyme label="d" type="m">ghelijck</rhyme></l>
        <l id="s2:l7" met="4" type="-+">Heerlijck wesen int <rhyme label="d" type="m" corresp="#s2:l6">Hemelrijck</rhyme></l>
        <l id="s2:l8" met="3" type="-+">‘By sijnen lieven <rhyme label="c" type="m" corresp="#s2:l5">Vaer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Sijn eerste handt seer <rhyme label="a" type="m">sterck</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Dat is sijn Goddelijcke <rhyme label="b" type="m">macht</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Waer door hy t’schepsel heeft <rhyme label="b" type="m" corresp="#s3:l2">volbracht</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Mach sijner handen <rhyme label="a" type="m" corresp="#s3:l1">werck</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Oock werpen in de <rhyme label="c" type="m">hel</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Recht alle dinghen, en <rhyme label="d" type="m">regeert</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Beschermt en ons goedich <rhyme label="d" type="m" corresp="#s3:l6">salveert</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Deur sijne handt seer <rhyme label="c" type="m" corresp="#s3:l5">wel</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Blijven sal hy <rhyme label="a" type="m">gherecht</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">En sijn macht is <rhyme label="b" type="m">gherechticheyt</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Met deser handt, hoort dit <rhyme label="b" type="m" corresp="#s4:l2">bescheyt</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Sal hy’t oordeel voeren niet <rhyme label="a" type="m" corresp="#s4:l1">slecht</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">En die hoofdaders <rhyme label="c" type="m">quaet</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Straffen met den eeuwighen <rhyme label="d" type="m">doot</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Ons te vernederen doet <rhyme label="d" type="m" corresp="#s4:l6">noot</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Hier onder desen <rhyme label="c" type="m" corresp="#s4:l5">staet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">En in sijn goetheyt <rhyme label="a" type="m">hoept</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Sijn handt is goedertierich <rhyme label="b" type="m">breydt</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Open om te gheven <rhyme label="b" type="m" corresp="#s5:l2">bereydt</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Onvercort, daer toe <rhyme label="a" type="m" corresp="#s5:l1">loept</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Vernedert int <rhyme label="c" type="m">ghemoet</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Sy is heel vol sonder <rhyme label="d" type="m">ghebreck</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Reyckt uyt sonder eenich <rhyme label="d" type="m" corresp="#s5:l6">vertreck</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Loopt uyt van <rhyme label="c" type="m" corresp="#s5:l5">overvloet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ten vierden by hem <rhyme label="a" type="m">is</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Godtlijcke wijsheyt heel <rhyme label="b" type="m">bequaem</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Die ongheschapene <rhyme label="b" type="m" corresp="#s6:l2">deuchtsaem</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Christus Gods Soon <rhyme label="a" type="m" corresp="#s6:l1">ghewis</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Gods rechte handt is <rhyme label="c" type="m">hy</rhyme>.</l>
        <l id="s6:l6" met="4" type="-+">Hoe nederich was al sijn <rhyme label="d" type="m">doen</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Even nae dit selve <rhyme label="d" type="m" corresp="#s6:l6">fatsoen</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Verootmoedicht oock <rhyme label="c" type="m" corresp="#s6:l5">ghy</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Met allen is hy <rhyme label="a" type="m">groot</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Machtioch, die alle dinck <rhyme label="b" type="m">deursweeft</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Iae allen Vee sijn voeder <rhyme label="b" type="m" corresp="#s7:l2">gheeft</rhyme>:</l>
        <l id="s7:l4" met="3" type="-+">Ghebenedijdt die waren <rhyme label="a" type="m" corresp="#s7:l1">bloot</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Hoe ghy mledigher <rhyme label="c" type="m">zijt</rhyme></l>
        <l id="s7:l6" met="4" type="-+">Van grootheyt en van s’weerelts <rhyme label="d" type="m">eer</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">Soo veel sult ghy van hem te <rhyme label="d" type="m" corresp="#s7:l6">meer</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Oock zijn <rhyme label="c" type="m" corresp="#s7:l5">ghebenedijt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Laet u niet zijn <rhyme label="a" type="m">ontmaeckt</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Het Goddelijck betrouwen <rhyme label="b" type="m">vast</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Dus oock sijn macht, hier wel op <rhyme label="b" type="m" corresp="#s8:l2">past</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Wel diet nu recht hier <rhyme label="a" type="m" corresp="#s8:l1">smaeckt</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">En sijn betrouwen <rhyme label="c" type="m">stelt</rhyme></l>
        <l id="s8:l6" met="4" type="-+">Ootmoedelijck nu onder <rhyme label="d" type="m">hem</rhyme>,</l>
        <l id="s8:l7" met="4" type="-+">Tot hy int nieu <rhyme label="d" type="m" corresp="#s8:l6">Ierusalem</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Mach comen met <rhyme label="c" type="m" corresp="#s8:l5">ghewelt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Ick segghe dat elck wel <rhyme label="a" type="m">mach</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Hem onder dees <rhyme label="b" type="m">gheweldighe</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Handt Gods booghen in elcke <rhyme label="b" type="m" corresp="#s9:l2">ste</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">En dat sonder <rhyme label="a" type="m" corresp="#s9:l1">verdrach</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Cort is nu onsen <rhyme label="c" type="m">tijdt</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Ons Iaren die verloopen <rhyme label="d" type="m">snel</rhyme>,</l>
        <l id="s9:l7" met="4" type="-+">Wie sijnen Godt nu is <rhyme label="d" type="m" corresp="#s9:l6">rebel</rhyme></l>
        <l id="s9:l8" met="3" type="-+">Crijcht naemaels gheen <rhyme label="c" type="m" corresp="#s9:l5">respijt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Seer lieffelijck int <rhyme label="a" type="m">slot</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Wilt dit in danck nemen van <rhyme label="b" type="m">my</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Hy stae ons met ghenaden <rhyme label="b" type="m" corresp="#s10:l2">by</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Iae de machtighe <rhyme label="a" type="m" corresp="#s10:l1">Godt</rhyme></l>
        <l id="s10:l5" met="3" type="-+">Leyd’ ons met sijnen <rhyme label="c" type="m">Gheest</rhyme></l>
        <l id="s10:l6" met="4" type="-+">Ootmoedelijck door Weerelts <rhyme label="d" type="m">pleyn</rhyme>,</l>
        <l id="s10:l7" met="4" type="-+">Om te vergaren <rhyme label="d" type="m" corresp="#s10:l6">alghemeyn</rhyme></l>
        <l id="s10:l8" met="3" type="-+">Int Hemelsche <rhyme label="c" type="m" corresp="#s10:l5">foreest</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

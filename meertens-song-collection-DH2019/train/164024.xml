  <author>Jacob Coenraetsz Mayvogel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">WAt loffelijcke <rhyme label="a" type="f">daden</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Wat heyl en <rhyme label="b" type="m">troost</rhyme></l>
        <l id="s1:l3" met="2" type="-+">Heeft Christus ons <rhyme label="c" type="f">verworven</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">O mensch! wilt niet <rhyme label="a" type="f" corresp="#s1:l1">versmaden</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">U Heylant, <rhyme label="d" type="m">die</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Soo bitter is <rhyme label="c" type="f" corresp="#s1:l3">gestorven</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Voor u aen 't <rhyme label="e" type="m">Kruys</rhyme>,</l>
        <l id="s1:l8" met="2" type="-+">Op dat ghy <rhyme label="e" type="m" corresp="#s1:l7">t'huys</rhyme></l>
        <l id="s1:l9" met="3" type="-+">Sijn Vaders sult <rhyme label="f" type="f">bewoonen</rhyme>,</l>
        <l id="s1:l10" met="2" type="-+">In 't huys hier <rhyme label="g" type="f">boven</rhyme>,</l>
        <l id="s1:l11" met="3" type="+-">Om Godt altijt te <rhyme label="g" type="f" corresp="#s1:l10">loven</rhyme></l>
        <l id="s1:l12" met="2" type="-+">In <rhyme label="f" type="f" corresp="#s1:l9">persoone</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Danckt God den Heer van <rhyme label="a" type="f">harten</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Ghy al sijn <rhyme label="b" type="m">Heyl'gen</rhyme></l>
        <l id="s2:l3" met="2" type="-+">t' Saem hier op der <rhyme label="c" type="f">aerden</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Die u heeft vry van <rhyme label="a" type="f" corresp="#s2:l1">smerten</rhyme></l>
        <l id="s2:l5" met="2" type="-+">Gemaeckt, doen 't <rhyme label="d" type="m">pack</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Der sonden u <rhyme label="c" type="f" corresp="#s2:l3">beswaerden</rhyme>:</l>
        <l id="s2:l7" met="2" type="-+">Soo seer dat <rhyme label="e" type="m">ghy</rhyme>,</l>
        <l id="s2:l8" met="2" type="-+">Gants waert <rhyme label="e" type="m" corresp="#s2:l7">onvry</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Vervreemt van Gods <rhyme label="f" type="f">belofte</rhyme>,</l>
        <l id="s2:l10" met="2" type="-+">O goetheyts <rhyme label="g" type="f">goede</rhyme>!</l>
        <l id="s2:l11" met="3" type="+-">Want met sijn eygen <rhyme label="g" type="f" corresp="#s2:l10">bloede</rhyme></l>
        <l id="s2:l12" met="2" type="-+">Hy ons <rhyme label="f" type="f" corresp="#s2:l9">kochte</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Singt lof, singt lof met <rhyme label="a" type="f">vreugde</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Singt lof den grooten <rhyme label="b" type="m">Godt</rhyme></l>
        <l id="s3:l3" met="2" type="-+">Van <rhyme label="c" type="f">Eeuwighede</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Singt lof, singt met <rhyme label="a" type="f" corresp="#s3:l1">geneughde</rhyme></l>
        <l id="s3:l5" met="2" type="-+">Singt lof den <rhyme label="d" type="m">Soon</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Die ons brengt tot den <rhyme label="c" type="f" corresp="#s3:l3">Vrede</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">Singt <rhyme label="e" type="m">onbevreest</rhyme>,</l>
        <l id="s3:l8" met="2" type="-+">Lof heyl'gen <rhyme label="e" type="m" corresp="#s3:l7">Geest</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Die ons heeft weer <rhyme label="f" type="f">geboren</rhyme>,</l>
        <l id="s3:l10" met="2" type="-+">Looft vroegh en <rhyme label="g" type="f">spade</rhyme>:</l>
        <l id="s3:l11" met="3" type="+-">Want Godt ons uyt <rhyme label="g" type="f" corresp="#s3:l10">genaden</rhyme></l>
        <l id="s3:l12" met="2" type="-+">Heeft <rhyme label="f" type="f" corresp="#s3:l9">verkoren</rhyme>.</l>
      </lg>
    </lg>
  </text>

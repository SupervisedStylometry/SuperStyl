  <author>Albertus Buitendyck</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">ALs 't Ioodtsche gespuys noch <rhyme label="a" type="f">quellen</rhyme></l>
        <l id="s1:l2" met="3" type="+-">Willen u, mijn <rhyme label="b" type="m">Heer</rhyme>;</l>
        <l id="s1:l3" met="4" type="+-">Een rouw, dick langh, swaer kruys <rhyme label="a" type="f" corresp="#s1:l1">stellen</rhyme></l>
        <l id="s1:l4" met="3" type="+-">Op uw' schoud'ren <rhyme label="b" type="m" corresp="#s1:l2">teer</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">Als Isaac zoo moet ghy <rhyme label="c" type="f">dragen</rhyme></l>
        <l id="s1:l6" met="3" type="+-">U eygen <rhyme label="d" type="m">branthout</rhyme>;</l>
        <l id="s1:l7" met="4" type="+-">U Vader ghy met <rhyme label="c" type="f" corresp="#s1:l5">behagen</rhyme></l>
        <l id="s1:l8" met="3" type="+-">'t Vyer en 't Swaert <rhyme label="d" type="m" corresp="#s1:l6">betrout</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Het rechtveerdigh Swaert, u <rhyme label="a" type="f">Vader</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">En sijn liefde <rhyme label="b" type="m">brandt</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Toont, toont aen ons <rhyme label="a" type="f" corresp="#s2:l1">allegader</rhyme>:</l>
        <l id="s2:l4" met="3" type="+-">Want tot <rhyme label="b" type="m" corresp="#s2:l2">offerhant</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Geeft u voor al onse <rhyme label="c" type="f">zonden</rhyme>.</l>
        <l id="s2:l6" met="3" type="+-">Als een <rhyme label="d" type="m">Moordenaer</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Na Calvarien, vol <rhyme label="c" type="f" corresp="#s2:l5">wonden</rhyme></l>
        <l id="s2:l8" met="3" type="+-">Sleept u een <rhyme label="d" type="m" corresp="#s2:l6">schaer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">'t Swaer Cruys uyt u hooft en <rhyme label="a" type="f">leden</rhyme></l>
        <l id="s3:l2" met="3" type="+-">Druckt, parst soo veel <rhyme label="b" type="m">bloet</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Als ghy een stap komt <rhyme label="a" type="f" corresp="#s3:l1">voort-treden</rhyme></l>
        <l id="s3:l4" met="3" type="+-">'t Spuyt, 't loopt, 't stroomt end' <rhyme label="b" type="m" corresp="#s3:l2">vloet</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Ghy tusschen twee <rhyme label="c" type="f">Moordenaren</rhyme></l>
        <l id="s3:l6" met="3" type="+-">Kruypt door dun en <rhyme label="d" type="m">dick</rhyme>.</l>
        <l id="s3:l7" met="4" type="+-">Met steenen werpt u de'es <rhyme label="c" type="f" corresp="#s3:l5">scharen</rhyme>,</l>
        <l id="s3:l8" met="3" type="+-">En met 't vuylste <rhyme label="d" type="m" corresp="#s3:l6">slick</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">U hooft slaen, uw' leden <rhyme label="a" type="f">trappen</rhyme>,</l>
        <l id="s4:l2" met="3" type="+-">'t Bloedt vloeyt meer en <rhyme label="b" type="m">meer</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">'t Maeckt bekent al uw' <rhyme label="a" type="f" corresp="#s4:l1">voet-stappen</rhyme>.</l>
        <l id="s4:l4" met="3" type="+-">Gy valt drie-mael <rhyme label="b" type="m" corresp="#s4:l2">neer</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">Hierom Simon van <rhyme label="c" type="f">Cyreenen</rhyme></l>
        <l id="s4:l6" met="3" type="+-">Dwingen 't boos <rhyme label="d" type="m">ghespuys</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Dat hy sijn schouders moet <rhyme label="c" type="f" corresp="#s4:l5">leenen</rhyme></l>
        <l id="s4:l8" met="3" type="+-">Onder 't last van 't <rhyme label="d" type="m" corresp="#s4:l6">Kruys</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Als een Lam laet ghy u <rhyme label="a" type="f">leyen</rhyme>.</l>
        <l id="s5:l2" met="3" type="+-">Aen Vrouwen <rhyme label="b" type="m">benout</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Seght ghy: wilt my niet <rhyme label="a" type="f" corresp="#s5:l1">beschreyen</rhyme>:</l>
        <l id="s5:l4" met="3" type="+-">Lijdt soo veel 't <rhyme label="b" type="m" corresp="#s5:l2">dor-hout</rhyme>;</l>
        <l id="s5:l5" met="4" type="+-">Wat sal 't groen niet moete <rhyme label="c" type="f">lijden</rhyme>;</l>
        <l id="s5:l6" met="3" type="+-">Vw' zelve <rhyme label="d" type="m">beweent</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Stelt uw' Kinders niet ter <rhyme label="c" type="f" corresp="#s5:l5">zijden</rhyme>,</l>
        <l id="s5:l8" met="3" type="+-">Desen al <rhyme label="d" type="m" corresp="#s5:l6">besteent</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Veronica ziet uw' <rhyme label="a" type="f">oogen</rhyme>,</l>
        <l id="s6:l2" met="3" type="+-">En aensicht <rhyme label="b" type="m">bebloedt</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Geeft haer doeck om af te <rhyme label="a" type="f" corresp="#s6:l1">droogen</rhyme></l>
        <l id="s6:l4" met="3" type="+-">'t Aensicht, dat eerst <rhyme label="b" type="m" corresp="#s6:l2">soet</rhyme></l>
        <l id="s6:l5" met="4" type="+-">Was en schoon, is vol <rhyme label="c" type="f">tormenten</rhyme></l>
        <l id="s6:l6" met="3" type="+-">Mis-maeckt, en <rhyme label="d" type="m">besweet</rhyme>.</l>
        <l id="s6:l7" met="4" type="+-">Met al sijn coleuren <rhyme label="c" type="f" corresp="#s6:l5">prenten</rhyme></l>
        <l id="s6:l8" met="3" type="+-">Ghy in 't <rhyme label="d" type="m" corresp="#s6:l6">lijne-kleedt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Hier door leert ghy, Heer der <rhyme label="a" type="f">Heeren</rhyme></l>
        <l id="s7:l2" met="3" type="+-">Dat ick al u <rhyme label="b" type="m">smart</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Versmaetheyt, liefde en <rhyme label="a" type="f" corresp="#s7:l1">seeren</rhyme></l>
        <l id="s7:l4" met="3" type="+-">Moet drucken in 't <rhyme label="b" type="m" corresp="#s7:l2">hart</rhyme>.</l>
        <l id="s7:l5" met="4" type="+-">Dat ick moet steenen noch <rhyme label="c" type="f">klagen</rhyme>,</l>
        <l id="s7:l6" met="3" type="+-">Dat mijn swaerste <rhyme label="d" type="m">pijn</rhyme>,</l>
        <l id="s7:l7" met="4" type="+-">By u roode-zee vol <rhyme label="c" type="f" corresp="#s7:l5">plagen</rhyme>,</l>
        <l id="s7:l8" met="3" type="+-">Maer een druppel <rhyme label="d" type="m" corresp="#s7:l6">zijn</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">8.Och! och Iesu, mijn <rhyme label="a" type="f">misdaden</rhyme></l>
        <l id="s8:l2" met="3" type="+-">Hebben u <rhyme label="b" type="m">gelaen</rhyme></l>
        <l id="s8:l3" met="4" type="+-">Met 't kruys // en bebloedt uw' <rhyme label="a" type="f" corresp="#s8:l1">paden</rhyme>,</l>
        <l id="s8:l4" met="3" type="+-">Geschopt, en <rhyme label="b" type="m" corresp="#s8:l2">geslaen</rhyme>:</l>
        <l id="s8:l5" met="4" type="+-">De schoonheyt hebben <rhyme label="c" type="f">benomen</rhyme></l>
        <l id="s8:l6" met="3" type="+-">Van u schoon <rhyme label="d" type="m">aensicht</rhyme>.</l>
        <l id="s8:l7" met="4" type="+-">Gy beswijckt onder de <rhyme label="c" type="f" corresp="#s8:l5">boome</rhyme></l>
        <l id="s8:l8" met="3" type="+-">Door mijn swaer <rhyme label="d" type="m" corresp="#s8:l6">gewicht</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Wilt Iesu, mijn ziel schoon <rhyme label="a" type="f">maken</rhyme>,</l>
        <l id="s9:l2" met="3" type="+-">Met u bloedigh <rhyme label="b" type="m">nat</rhyme>;</l>
        <l id="s9:l3" met="4" type="+-">Kom ick tot valle te <rhyme label="a" type="f" corresp="#s9:l1">raken</rhyme>,</l>
        <l id="s9:l4" met="3" type="+-">Op helpt my we'er <rhyme label="b" type="m" corresp="#s9:l2">rat</rhyme>.</l>
        <l id="s9:l5" met="4" type="+-">Versterckt my in druck en <rhyme label="c" type="f">rouwen</rhyme>:</l>
        <l id="s9:l6" met="3" type="+-">U pijn in my <rhyme label="d" type="m">prent</rhyme>;</l>
        <l id="s9:l7" met="4" type="+-">V aenschijn schoon doet <rhyme label="c" type="f" corresp="#s9:l5">aenschouwen</rhyme></l>
        <l id="s9:l8" met="3" type="+-">My, in 't levens <rhyme label="d" type="m" corresp="#s9:l6">endt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

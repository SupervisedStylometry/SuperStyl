    </categories>
  <author>Pieter Datheen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O MYN Godt, wilt my nu <rhyme label="a" type="f">bevryden</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Voor den menschen seer boos end <rhyme label="b" type="m">quaet</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Behoedt my nu end t'allen <rhyme label="a" type="f" corresp="#s1:l1">tyden</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Voor der listighen raet end <rhyme label="b" type="m" corresp="#s1:l2">daet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Die daeghelicks met haers <rhyme label="a" type="f">ghelycken</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Teghen my dencken schalckheit <rhyme label="b" type="m">loos</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Ende my strydt in allen <rhyme label="a" type="f" corresp="#s2:l1">wycken</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Van nieuws aendoen met herten <rhyme label="b" type="m" corresp="#s2:l2">boos</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Haer listighe tonghen <rhyme label="a" type="f">hooghmoedigh</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Scherpen se als slanghen seer <rhyme label="b" type="m">fyn</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Onder haer lippen <rhyme label="a" type="f" corresp="#s3:l1">ouervloedigh</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Hebben se Aederen <rhyme label="b" type="m" corresp="#s3:l2">venyn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Bewaert my voor der boosen <rhyme label="a" type="f">handen</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">End myn ghanghen tot deser <rhyme label="b" type="m">stondt</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Voor den moetwillighen <rhyme label="a" type="f" corresp="#s4:l1">vianden</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Die my willen bringhen te <rhyme label="b" type="m" corresp="#s4:l2">grondt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Die grootsche hebben nu met <rhyme label="a" type="f">listen</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Myner sielen stricken <rhyme label="b" type="m">bereydt</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Op dat se my te vanghen <rhyme label="a" type="f" corresp="#s5:l1">wisten</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">In den weghen daer ghy my <rhyme label="b" type="m" corresp="#s5:l2">leydt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Doe sprack ick met vasten <rhyme label="a" type="f">vertrauwen</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Ghy sijt O Heer myn Godt <rhyme label="b" type="m">alleyn</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Verhoort my in myn swaer <rhyme label="a" type="f" corresp="#s6:l1">benauwen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Hoort die stemme myns ghebets <rhyme label="b" type="m" corresp="#s6:l2">reyn</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Heer' ghy sijt myn waepen seer <rhyme label="a" type="f">krachtigh</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Myn helm, als my die noot <rhyme label="b" type="m">beswaert</rhyme>:</l>
        <l id="s7:l3" met="4" type="-+">Als ick in't velt benauwt was <rhyme label="a" type="f" corresp="#s7:l1">klachtigh</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Ghy heby my t'hooft ghedeckt <rhyme label="b" type="m" corresp="#s7:l2">bewaert</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Wilt den boosen Heer' niet <rhyme label="a" type="f">toelaeten</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">T'volbringhen haers voornemens <rhyme label="b" type="m">fel</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Anders souden sy, die my <rhyme label="a" type="f" corresp="#s8:l1">haeten</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Hooghmoedigh end stoudt werden <rhyme label="b" type="m" corresp="#s8:l2">snel</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Dat den Ouersten onder <rhyme label="a" type="f">desen</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Die my quelt, toekomme met <rhyme label="b" type="m">kracht</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Dat lyden end elendigh <rhyme label="a" type="f" corresp="#s9:l1">wesen</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Dat hy my te doen was <rhyme label="b" type="m" corresp="#s9:l2">bedacht</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Dat hen kolen op den kop <rhyme label="a" type="f">vallen</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">End gantschelick te gronde <rhyme label="b" type="m">gaen</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Slaet se met tempeest ouer <rhyme label="a" type="f" corresp="#s10:l1">allen</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">So dat se niet meer op en <rhyme label="b" type="m" corresp="#s10:l2">staen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Die quaedtonghighe mensch' <rhyme label="a" type="f">alommen</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Sal niet langhe blyuen in <rhyme label="b" type="m">staet</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Op den moetwillighen sal <rhyme label="a" type="f" corresp="#s11:l1">bekommen</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Syn eyghen aenslagh end sijn <rhyme label="b" type="m" corresp="#s11:l2">raet</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Godt sal sijn ghetrauwheit <rhyme label="a" type="f">verklaeren</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Hem die met onrecht is <rhyme label="b" type="m">ghequelt</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Sy die den vromen hier <rhyme label="a" type="f" corresp="#s12:l1">beswaeren</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Werden voor Godts oordeel <rhyme label="b" type="m" corresp="#s12:l2">ghestelt</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Die vrome sullen uwen <rhyme label="a" type="f">naeme</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Die heerlick is prysen O <rhyme label="b" type="m">Heer'</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">D'oprechte sullen eewigh <rhyme label="a" type="f" corresp="#s13:l1">t'saeme</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">By v wonen in aller <rhyme label="b" type="m" corresp="#s13:l2">eer'</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

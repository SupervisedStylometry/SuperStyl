  <author>Cornelis de Leeuw</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">WIlt ghy krijghen 't eeuwigh <rhyme label="a" type="f">leven</rhyme></l>
        <l id="s1:l2" met="3" type="+-">Door <rhyme label="b" type="m">Godtsaligheyt</rhyme>:</l>
        <l id="s1:l3" met="4" type="+-">Ghy moet u ter wacht <rhyme label="a" type="f" corresp="#s1:l1">begeven</rhyme></l>
        <l id="s1:l4" met="3" type="+-">Met <rhyme label="b" type="m" corresp="#s1:l2">voorsichtigheyt</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Den Satan u <rhyme label="c" type="m">omringht</rhyme>,</l>
        <l id="s1:l6" met="3" type="+-">En soeckt uw' <rhyme label="d" type="m">elent</rhyme>:</l>
        <l id="s1:l7" met="3" type="-+">De Weerelt u <rhyme label="c" type="m" corresp="#s1:l5">bespringht</rhyme>;</l>
        <l id="s1:l8" met="3" type="+-">'t Sy, waer dat gh' u <rhyme label="d" type="m" corresp="#s1:l6">went</rhyme></l>
        <l id="s1:l9" met="3" type="+-">Of keert, u <rhyme label="e" type="m">vyant</rhyme></l>
        <l id="s1:l10" met="4" type="+-">Vint ghy stadigh by der <rhyme label="e" type="m" corresp="#s1:l9">hant</rhyme>,</l>
        <l id="s1:l11" met="3" type="+-">Die u sterck <rhyme label="e" type="m" corresp="#s1:l9">aenrandt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Goede wacht houdt in u <rhyme label="a" type="f">saecken</rhyme>:</l>
        <l id="s2:l2" met="3" type="+-">Wijs'lijck u <rhyme label="b" type="m">besindt</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Wat voor wercken ghy wilt <rhyme label="a" type="f" corresp="#s2:l1">maecken</rhyme>;</l>
        <l id="s2:l4" met="3" type="+-">Anders niet <rhyme label="b" type="m" corresp="#s2:l2">begint</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Op dat u niet <rhyme label="c" type="m">bedriegh</rhyme></l>
        <l id="s2:l6" met="3" type="+-">Satans quade <rhyme label="d" type="m">list</rhyme>:</l>
        <l id="s2:l7" met="3" type="-+">Of u niet voor en <rhyme label="c" type="m" corresp="#s2:l5">liegh</rhyme></l>
        <l id="s2:l8" met="3" type="+-">Vreught met schijn <rhyme label="d" type="m" corresp="#s2:l6">vernist</rhyme>;</l>
        <l id="s2:l9" met="3" type="+-">Of yet welckers <rhyme label="e" type="m">schijn</rhyme></l>
        <l id="s2:l10" met="4" type="+-">Voor het oogh lijckt <rhyme label="e" type="m" corresp="#s2:l9">Medecijn</rhyme></l>
        <l id="s2:l11" met="3" type="+-">Doch sy recht <rhyme label="e" type="m" corresp="#s2:l9">venijn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Soo wanneer een Stadt <rhyme label="a" type="f">bevechten</rhyme></l>
        <l id="s3:l2" met="3" type="+-">Of omcing'len <rhyme label="b" type="m">sterck</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Onverzaeghde <rhyme label="a" type="f" corresp="#s3:l1">oorloghs-knechten</rhyme>;</l>
        <l id="s3:l4" met="3" type="+-">Neemtmen neerstigh <rhyme label="b" type="m" corresp="#s3:l2">merck</rhyme></l>
        <l id="s3:l5" met="3" type="-+">En opsicht op die <rhyme label="c" type="m">gheen</rhyme></l>
        <l id="s3:l6" met="3" type="+-">Die van buyten <rhyme label="d" type="m">in</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Komt en men vraeght, waer <rhyme label="c" type="m" corresp="#s3:l5">heen</rhyme>?</l>
        <l id="s3:l8" met="3" type="+-">Of wat is u <rhyme label="d" type="m" corresp="#s3:l6">sin</rhyme>?</l>
        <l id="s3:l9" met="3" type="+-">Men siet, wie hy <rhyme label="e" type="m">sy</rhyme>.</l>
        <l id="s3:l10" met="4" type="+-">Kentmen hem voor vrient, hy <rhyme label="e" type="m" corresp="#s3:l9">vry</rhyme></l>
        <l id="s3:l11" met="3" type="+-">Komt, soo niet, in <rhyme label="e" type="m" corresp="#s3:l9">ly</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Let op 't gheene, dat van <rhyme label="a" type="f">buyten</rhyme></l>
        <l id="s4:l2" met="3" type="+-">Listigh in 't <rhyme label="b" type="m">ghemoet</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Wil in sluypen. Wilt uyt <rhyme label="a" type="f" corresp="#s4:l1">sluyten</rhyme></l>
        <l id="s4:l4" met="3" type="+-">Wat u hinder <rhyme label="b" type="m" corresp="#s4:l2">doet</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Aenschout, wat <rhyme label="c" type="m">ydelheyt</rhyme></l>
        <l id="s4:l6" met="3" type="+-">U liefkosend' <rhyme label="d" type="m">vleyt</rhyme>.</l>
        <l id="s4:l7" met="3" type="-+">Wat quae <rhyme label="c" type="m" corresp="#s4:l5">gheneghentheyt</rhyme></l>
        <l id="s4:l8" met="3" type="+-">U tot sonden <rhyme label="d" type="m" corresp="#s4:l6">leydt</rhyme>.</l>
        <l id="s4:l9" met="3" type="+-">Treck u sinnen <rhyme label="e" type="m">aff</rhyme></l>
        <l id="s4:l10" met="4" type="+-">Van 't gheen, u tot sonden <rhyme label="e" type="m" corresp="#s4:l9">gaff</rhyme></l>
        <l id="s4:l11" met="3" type="+-">Oorsaeck. Mijdt Gods <rhyme label="e" type="m" corresp="#s4:l9">straff</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Span u krachten in en <rhyme label="a" type="f">sinnen</rhyme></l>
        <l id="s5:l2" met="3" type="+-">Dat doch in u <rhyme label="b" type="m">hert</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Niet en kome immer <rhyme label="a" type="f" corresp="#s5:l1">binnen</rhyme></l>
        <l id="s5:l4" met="3" type="+-">Dat u houdt <rhyme label="b" type="m" corresp="#s5:l2">ververt</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Van Godt; of raet tot <rhyme label="c" type="m">quaet</rhyme>.</l>
        <l id="s5:l6" met="3" type="+-">Moet u onder <rhyme label="d" type="m">schijn</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Van goet, yet quaets, soo <rhyme label="c" type="m" corresp="#s5:l5">laet</rhyme></l>
        <l id="s5:l8" met="3" type="+-">'t Quaet ver van u <rhyme label="d" type="m" corresp="#s5:l6">sijn</rhyme>.</l>
        <l id="s5:l9" met="3" type="+-">Sluyt niet int <rhyme label="e" type="m">ghemoet</rhyme></l>
        <l id="s5:l10" met="4" type="+-">'t Onbekende: licht schae <rhyme label="e" type="m" corresp="#s5:l9">doet</rhyme>,</l>
        <l id="s5:l11" met="3" type="+-">'t Gheen ghy keurt voor <rhyme label="e" type="m" corresp="#s5:l9">goet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Treck maer af vermomde <rhyme label="a" type="f">luyster</rhyme></l>
        <l id="s6:l2" met="3" type="+-">Van 't ghewaende <rhyme label="b" type="m">goet</rhyme>:</l>
        <l id="s6:l3" met="4" type="+-">Al des Weerelts glimp sal <rhyme label="a" type="f" corresp="#s6:l1">duyster</rhyme></l>
        <l id="s6:l4" met="3" type="+-">Sijn, haer suycker, <rhyme label="b" type="m" corresp="#s6:l2">roet</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Vertrout den Satan <rhyme label="c" type="m">niet</rhyme>,</l>
        <l id="s6:l6" met="3" type="+-">Of hy sich <rhyme label="d" type="m">vertoont</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Behulpsaem: hy <rhyme label="c" type="m" corresp="#s6:l5">aenbiet</rhyme></l>
        <l id="s6:l8" met="3" type="+-">Troost: doch by hem <rhyme label="d" type="m" corresp="#s6:l6">woont</rhyme></l>
        <l id="s6:l9" met="3" type="+-">Niet dan snood' <rhyme label="e" type="m">verraet</rhyme>:</l>
        <l id="s6:l10" met="4" type="+-">Daerom sijn schoon schijnend' <rhyme label="e" type="m" corresp="#s6:l9">quaet</rhyme></l>
        <l id="s6:l11" met="3" type="+-">U te vreesen <rhyme label="e" type="m" corresp="#s6:l9">staet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Let of woorden en <rhyme label="a" type="f">ghedachten</rhyme></l>
        <l id="s7:l2" met="3" type="+-">En al wat ghy <rhyme label="b" type="m">werckt</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Gods eer en u heyl <rhyme label="a" type="f" corresp="#s7:l1">betrachten</rhyme>,</l>
        <l id="s7:l4" met="3" type="+-">En u naesten <rhyme label="b" type="m" corresp="#s7:l2">sterckt</rhyme></l>
        <l id="s7:l5" met="3" type="-+">In heyligheyt. Stoot <rhyme label="c" type="m">uyt</rhyme></l>
        <l id="s7:l6" met="3" type="+-">Uyt u hert, al't <rhyme label="d" type="m">gheen</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Dat sich daer binnen <rhyme label="c" type="m" corresp="#s7:l5">sluyt</rhyme></l>
        <l id="s7:l8" met="3" type="+-">Om u te <rhyme label="d" type="m" corresp="#s7:l6">vertre'en</rhyme>.</l>
        <l id="s7:l9" met="3" type="+-">Selfs maer een <rhyme label="e" type="m">Vyant</rhyme></l>
        <l id="s7:l10" met="4" type="+-">Ock met al u kracht <rhyme label="e" type="m" corresp="#s7:l9">verbant</rhyme>.</l>
        <l id="s7:l11" met="3" type="+-">Want hy Moort en <rhyme label="e" type="m" corresp="#s7:l9">Brant</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Goede wacht houdt om te <rhyme label="a" type="f">wesen</rhyme></l>
        <l id="s8:l2" met="3" type="+-">Onderrecht, om <rhyme label="b" type="m">Godt</rhyme></l>
        <l id="s8:l3" met="4" type="+-">En u heylant recht te <rhyme label="a" type="f" corresp="#s8:l1">vreesen</rhyme>,</l>
        <l id="s8:l4" met="3" type="+-">Volghens sijn <rhyme label="b" type="m" corresp="#s8:l2">ghebodt</rhyme>.</l>
        <l id="s8:l5" met="3" type="-+">Hou vast aen 's Heeren <rhyme label="c" type="m">Wet</rhyme>,</l>
        <l id="s8:l6" met="3" type="+-">Nimmer die <rhyme label="d" type="m">verlaet</rhyme>.</l>
        <l id="s8:l7" met="3" type="-+">Op doen en laten <rhyme label="c" type="m" corresp="#s8:l5">let</rhyme>.</l>
        <l id="s8:l8" met="3" type="+-">Christi tredt nae <rhyme label="d" type="m" corresp="#s8:l6">gaet</rhyme>.</l>
        <l id="s8:l9" met="3" type="+-">Met de daet <rhyme label="e" type="m">verklaert</rhyme></l>
        <l id="s8:l10" met="4" type="+-">U gheloof: en u <rhyme label="e" type="m" corresp="#s8:l9">bewaert</rhyme></l>
        <l id="s8:l11" met="3" type="+-">Voor 't gheen sonden <rhyme label="e" type="m" corresp="#s8:l9">baert</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Als het goed werck is <rhyme label="a" type="f">bedreven</rhyme></l>
        <l id="s9:l2" met="3" type="+-">Hout sorghvuldigh <rhyme label="b" type="m">wacht</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Dat u ziele noyt in 't <rhyme label="a" type="f" corresp="#s9:l1">leven</rhyme></l>
        <l id="s9:l4" met="3" type="+-">We'er het quaet <rhyme label="b" type="m" corresp="#s9:l2">betracht</rhyme>.</l>
        <l id="s9:l5" met="3" type="-+">Luystert niet nae de <rhyme label="c" type="m">vreught</rhyme></l>
        <l id="s9:l6" met="3" type="+-">Van de Weerelt. Acht <rhyme label="d" type="m">niet</rhyme></l>
        <l id="s9:l7" met="3" type="-+">Den Satan; <rhyme label="c" type="m" corresp="#s9:l5">ongheneucht</rhyme></l>
        <l id="s9:l8" met="3" type="+-">Hy voor u brout. <rhyme label="d" type="m" corresp="#s9:l6">Siet</rhyme></l>
        <l id="s9:l9" met="3" type="+-">Toe, dat ghy niet <rhyme label="e" type="m">smoort</rhyme></l>
        <l id="s9:l10" met="4" type="+-">Uw' Ghelooff. Brengh vruchten <rhyme label="e" type="m" corresp="#s9:l9">voort</rhyme>.</l>
        <l id="s9:l11" met="3" type="+-">Maeck Godt niet <rhyme label="e" type="m" corresp="#s9:l9">verstoort</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Daer eens water was, kan <rhyme label="a" type="f">komen</rhyme></l>
        <l id="s10:l2" met="3" type="+-">'r Water <rhyme label="b" type="m">wederom</rhyme>.</l>
        <l id="s10:l3" met="4" type="+-">Die quae tochten niet wil <rhyme label="a" type="f" corresp="#s10:l1">toomen</rhyme>,</l>
        <l id="s10:l4" met="3" type="+-">Blijft staegh even <rhyme label="b" type="m" corresp="#s10:l2">krom</rhyme>.</l>
        <l id="s10:l5" met="3" type="-+">Begheert ghy hooghen <rhyme label="c" type="m">staet</rhyme>,</l>
        <l id="s10:l6" met="3" type="+-">Lieft ghy Aertsche <rhyme label="d" type="m">vreught</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Ghy metter tijdt <rhyme label="c" type="m" corresp="#s10:l5">verlaet</rhyme></l>
        <l id="s10:l8" met="3" type="+-">U Ghelooff en <rhyme label="d" type="m" corresp="#s10:l6">deught</rhyme>.</l>
        <l id="s10:l9" met="3" type="+-">Gierigheydt <rhyme label="e" type="m">verleydt</rhyme></l>
        <l id="s10:l10" met="4" type="+-">Ons tot sonden; en ons <rhyme label="e" type="m" corresp="#s10:l9">scheyt</rhyme></l>
        <l id="s10:l11" met="3" type="+-">Van <rhyme label="e" type="m" corresp="#s10:l9">Godsaligheydt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Wilt u selfs in tijdts <rhyme label="a" type="f">bereyden</rhyme></l>
        <l id="s11:l2" met="3" type="+-">Tot <rhyme label="b" type="m">Godtsaligheydt</rhyme>.</l>
        <l id="s11:l3" met="4" type="+-">Wilt de sonden van u <rhyme label="a" type="f" corresp="#s11:l1">scheyden</rhyme>,</l>
        <l id="s11:l4" met="3" type="+-">En <rhyme label="b" type="m" corresp="#s11:l2">gheleghentheydt</rhyme></l>
        <l id="s11:l5" met="3" type="-+">Tot quaet. 't Gheen ghy <rhyme label="c" type="m">verstaet</rhyme></l>
        <l id="s11:l6" met="3" type="+-">Dat tot sonden <rhyme label="d" type="m">leyt</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">Met gantscher herten <rhyme label="c" type="m" corresp="#s11:l5">haet</rhyme>.</l>
        <l id="s11:l8" met="3" type="+-">Met <rhyme label="d" type="m" corresp="#s11:l6">voorsichtigheyt</rhyme></l>
        <l id="s11:l9" met="3" type="+-">Roey uyt alles, <rhyme label="e" type="m">wat</rhyme></l>
        <l id="s11:l10" met="4" type="+-">Uwen Vyandt dient om 't <rhyme label="e" type="m" corresp="#s11:l9">padt</rhyme></l>
        <l id="s11:l11" met="3" type="+-">'t Enghen nae Gods <rhyme label="e" type="m" corresp="#s11:l9">Stadt</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Soo langh waecken u <rhyme label="a" type="f">vyanden</rhyme></l>
        <l id="s12:l2" met="3" type="+-">Hout oock goede <rhyme label="b" type="m">wacht</rhyme>.</l>
        <l id="s12:l3" met="4" type="+-">Laet van niemandt u <rhyme label="a" type="f" corresp="#s12:l1">aenranden</rhyme>.</l>
        <l id="s12:l4" met="3" type="+-">Kleyn gheen vyant <rhyme label="b" type="m" corresp="#s12:l2">acht</rhyme>.</l>
        <l id="s12:l5" met="3" type="-+">Gheen arbeyt u <rhyme label="c" type="m">verdriet</rhyme>.</l>
        <l id="s12:l6" met="3" type="+-">In de deught <rhyme label="d" type="m">volhert</rhyme>.</l>
        <l id="s12:l7" met="3" type="-+">Wie trouw'lijck dient, <rhyme label="c" type="m" corresp="#s12:l5">gheniet</rhyme></l>
        <l id="s12:l8" met="3" type="+-">Seghen hier; en <rhyme label="d" type="m" corresp="#s12:l6">wert</rhyme></l>
        <l id="s12:l9" met="3" type="+-">Erf-ghenaem van 't <rhyme label="e" type="m">Rijck</rhyme>,</l>
        <l id="s12:l10" met="4" type="+-">'t Gheen' belooft, Godt die <rhyme label="e" type="m" corresp="#s12:l9">ghelijck</rhyme></l>
        <l id="s12:l11" met="3" type="+-">Hem sijn, <rhyme label="e" type="m" corresp="#s12:l9">eeuwighlijck</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

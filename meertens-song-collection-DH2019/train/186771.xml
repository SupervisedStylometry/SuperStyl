  <author>Joannes Six van Chandelier</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Singt een nieuw lied den Heer ter <rhyme label="a" type="f">eere</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Gy aarde, singt alom den <rhyme label="a" type="f" corresp="#s1:l1">Heere</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Psalmsingt den heere, looft syn <rhyme label="b" type="m">naam</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Komt, tot den roem syns heils, te <rhyme label="b" type="m" corresp="#s1:l3">saam</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">En boodschapt, dag, aan dag, die <rhyme label="a" type="f" corresp="#s1:l1">leere</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Vertelt syn eer aan 't heidensch <rhyme label="a" type="f">weesen</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">En maakt syn wonderen, na <rhyme label="a" type="f" corresp="#s2:l1">deesen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">By alle volkeren, <rhyme label="b" type="m">vermaart</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Want 's Heeren grootheit, <rhyme label="b" type="m" corresp="#s2:l3">prysenswaard</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Is booven alle go√¥n te <rhyme label="a" type="f" corresp="#s2:l1">vreesen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Der volken gooden zyn slechs <rhyme label="a" type="f">dingen</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Die nietig zyn, en licht <rhyme label="a" type="f" corresp="#s3:l1">vergingen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Maar God, die maakte 's heemels <rhyme label="b" type="m">boog</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">De majesteit staat voor syn <rhyme label="b" type="m" corresp="#s3:l3">oog</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">De heerlikheit blyft hem <rhyme label="a" type="f" corresp="#s3:l1">omringen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Syn sterkheit, en cieraad <rhyme label="a" type="f">bestraalen</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Het heiligdom van syne <rhyme label="a" type="f" corresp="#s4:l1">saalen</rhyme>.</l>
        <l id="s4:l3" met="4" type="-+">Geeft, gy geslachten, dies den <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Gy volken, geeft den Heer syn <rhyme label="b" type="m" corresp="#s4:l3">eer</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">En wilt syn sterktes lof <rhyme label="a" type="f" corresp="#s4:l1">verhaalen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Geeft God, den Heer, syn eer ter <rhyme label="a" type="f">deegen</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">En roemt syn eernaam aller <rhyme label="a" type="f" corresp="#s5:l1">weegen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Elk breng hem offergaaven <rhyme label="b" type="m">aan</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">En kom in synen voorhof <rhyme label="b" type="m" corresp="#s5:l3">staan</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Om daar den godsdienst in te <rhyme label="a" type="f" corresp="#s5:l1">pleegen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Hebt heilig ciersel <rhyme label="a" type="f">aangetoogen</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">En bidt den Heere, <rhyme label="a" type="f" corresp="#s6:l1">neergeboogen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Dus aan, in 't heerlik <rhyme label="b" type="m">heiligdom</rhyme>.</l>
        <l id="s6:l4" met="4" type="-+">Gy aarde, schrikt, en beeft <rhyme label="b" type="m" corresp="#s6:l3">alom</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Voor 't vreeslik aanschyn syner <rhyme label="a" type="f" corresp="#s6:l1">oogen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Segt tot de heidens, en met <rhyme label="a" type="f">reeden</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">De Heer wierdt kooning aller <rhyme label="a" type="f" corresp="#s7:l1">steeden</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Dies staat de weereld vast, en <rhyme label="b" type="m">hecht</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Sy zal niet wanken, want hy <rhyme label="b" type="m" corresp="#s7:l3">recht</rhyme></l>
        <l id="s7:l5" met="4" type="-+">De volken in <rhyme label="a" type="f" corresp="#s7:l1">rechtmaatigheeden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Verblydt u dan, gy <rhyme label="a" type="f">heemelringen</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Verheugt u ook, gy aardsche <rhyme label="a" type="f" corresp="#s8:l1">dingen</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Gy volle zeekolk, dondert <rhyme label="b" type="m">gy</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Gy velden, springt, met alles, <rhyme label="b" type="m" corresp="#s8:l3">bly</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Dan zal al 't woudgeboomt ook <rhyme label="a" type="f" corresp="#s8:l1">singen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Juicht voor den Heer, hy komt <rhyme label="a" type="f">verheeven</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Ja, siet, hy komt op aarde <rhyme label="a" type="f" corresp="#s9:l1">leeven</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Om recht te doen, en is van <rhyme label="b" type="m">sin</rhyme></l>
        <l id="s9:l4" met="4" type="-+">De weereld, en het volk daar <rhyme label="b" type="m" corresp="#s9:l3">in</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Na recht, en waarheit, recht te <rhyme label="a" type="f" corresp="#s9:l1">geeven</rhyme>.</l>
      </lg>
    </lg>
  </text>

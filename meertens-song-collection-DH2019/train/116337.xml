  <author>Claes Stapel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">OP, op mijn geest uit 's Weerelds <rhyme label="a" type="m">stof</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Zing Iesus uwen Heiland <rhyme label="a" type="m" corresp="#s1:l1">lof</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Met lijf en ziel, met hert en <rhyme label="b" type="m">keel</rhyme>:</l>
        <l id="s1:l4" met="4" type="-+">Hy is uw hoogst' en waardste <rhyme label="b" type="m" corresp="#s1:l3">deel</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Lof Iesus, bron van heil en <rhyme label="a" type="m">vreugd</rhyme>;</l>
        <l id="s2:l2" met="4" type="-+">Lof Iesus, die ons hert <rhyme label="a" type="m" corresp="#s2:l1">verheugd</rhyme>.</l>
        <l id="s2:l3" met="4" type="-+">Lof Iesus, zaaligheids <rhyme label="b" type="m">fontein</rhyme>.</l>
        <l id="s2:l4" met="4" type="-+">Die ons gemaakt hebt schoon en <rhyme label="b" type="m" corresp="#s2:l3">rein</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Wanneer wy door der zonden <rhyme label="a" type="m">magt</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Verwonnen waaren en <rhyme label="a" type="m" corresp="#s3:l1">verkracht</rhyme>.</l>
        <l id="s3:l3" met="4" type="-+">Zijt Gy gekoomen sterke <rhyme label="b" type="m">Held</rhyme>.</l>
        <l id="s3:l4" met="4" type="-+">En hebt de zonden <rhyme label="b" type="m" corresp="#s3:l3">ne'er-geveld</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Als ons de Weereld had <rhyme label="a" type="m">verleid</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Tot on-deugd en <rhyme label="a" type="m" corresp="#s4:l1">ramp-zaaligheid</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Hebt Gy ons door uw Herders <rhyme label="b" type="m">staf</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Gereddet uit der hellen <rhyme label="b" type="m" corresp="#s4:l3">graf</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Gy hebt des Duivels magt <rhyme label="a" type="m">ontroofd</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Den kroon genoomen van zijn <rhyme label="a" type="m" corresp="#s5:l1">hoofd</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Zijn kop vertreeden met uw <rhyme label="b" type="m">voet</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">En van zijn plaag uw volk <rhyme label="b" type="m" corresp="#s5:l3">behoed</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Gy hebt des Heemels hoogste <rhyme label="a" type="m">goed</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Voor ons gewonnen door uw <rhyme label="a" type="m" corresp="#s6:l1">bloed</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">De weg gebaand, en <rhyme label="b" type="m">op-gedaan</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Des Heemels-poort, om in te <rhyme label="b" type="m" corresp="#s6:l3">gaan</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Gy zittend in des Heemels <rhyme label="a" type="m">boog</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Laat needer-daalen van om <rhyme label="a" type="m" corresp="#s7:l1">hoog</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Uw geest: die ons getuigen <rhyme label="b" type="m">is</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Dat God door U onz Vaader <rhyme label="b" type="m" corresp="#s7:l3">is</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Dies moet Gy Iesus zijn <rhyme label="a" type="m">geloofd</rhyme></l>
        <l id="s8:l2" met="4" type="-+">In eeuwigheid, als <rhyme label="a" type="m" corresp="#s8:l1">opper-hoofd</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Van 't heilig volk, wiens <rhyme label="b" type="m">zaaligheid</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Gy hebt in 't Heemels hof <rhyme label="b" type="m" corresp="#s8:l3">bereid</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Geloofd zy uw hoog-waarde <rhyme label="a" type="m">naam</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Van Menschen en van Eng'len t' <rhyme label="a" type="m" corresp="#s9:l1">zaam</rhyme>:</l>
        <l id="s9:l3" met="4" type="-+">O Iesus! alder-zoetste <rhyme label="b" type="m">lust</rhyme>:</l>
        <l id="s9:l4" met="4" type="-+">Der zielen hoogste troost en <rhyme label="b" type="m" corresp="#s9:l3">rust</rhyme>.</l>
      </lg>
    </lg>
  </text>

    <melody>Nerea schoonste van uw geburen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Jacob Rosant</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">SOo wie mijn Vaêr belieft te <rhyme label="a" type="f">trecken</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Alleen die tot mijn komen <rhyme label="b" type="m">magh</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">En ik dien wederom <rhyme label="a" type="f" corresp="#s1:l1">verwecken</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Sal in den <rhyme label="b" type="m" corresp="#s1:l2">Alderjonghsten-dagh</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Daeromme wilt niet <rhyme label="a" type="f">murmureren</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Terwijlen daer geschreeven <rhyme label="b" type="m">staet</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Men sullen al van Godt nogh <rhyme label="a" type="f" corresp="#s2:l1">leeren</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Die hoort den Vader tot mijn <rhyme label="b" type="m" corresp="#s2:l2">gaet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Niet dat ymandt mijn Vaêr <rhyme label="a" type="f">aenschouwe</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Ten sy dat hy van Gode <rhyme label="b" type="m">sy</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Het eeuwigh leeven sal hy <rhyme label="a" type="f" corresp="#s3:l1">houwe</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Voorwaer, die welk gelooft in <rhyme label="b" type="m" corresp="#s3:l2">my</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Voorwaer, ik ben des levens <rhyme label="a" type="f">Broode</rhyme>;</l>
        <l id="s4:l2" met="4" type="-+">Uw Vaderen in de <rhyme label="b" type="m">Woestijn</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Het Manna aten, en sijn <rhyme label="a" type="f" corresp="#s4:l1">doode</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Sy altamael gestorven <rhyme label="b" type="m" corresp="#s4:l2">sijn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Dit is dat Broodt dat is <rhyme label="a" type="f">geklommen</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Van d'hooge Hemel, op dat <rhyme label="b" type="m">al</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Die welk daer van te eeten <rhyme label="a" type="f" corresp="#s5:l1">kommen</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Der sielen doodt niet sterven <rhyme label="b" type="m" corresp="#s5:l2">sal</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">DEn <rhyme label="a" type="m">Nachtergal</rhyme></l>
        <l id="s1:l2" met="2" type="-+">Seer lief <rhyme label="a" type="m" corresp="#s1:l1">getal</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Gaet inden Mey <rhyme label="b" type="f">vermeyden</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Met lievelijck <rhyme label="a" type="m" corresp="#s1:l1">gheschal</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Comt ghy het hert <rhyme label="b" type="f" corresp="#s1:l3">verbleyden</rhyme>;</l>
        <l id="s1:l6" met="3" type="-+">Hy maeckt een soet <rhyme label="c" type="m">gheluyt</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">'t Is als een hemelsch' <rhyme label="c" type="m" corresp="#s1:l6">fluyt</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">'t Is als een Vogelk' uyt de <rhyme label="c" type="m" corresp="#s1:l6">muyt</rhyme>;</l>
        <l id="s1:l9" met="3" type="-+">Het mint de groene <rhyme label="d" type="f">boomen</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">Het mint de groene <rhyme label="d" type="f" corresp="#s1:l9">boomen</rhyme>,</l>
        <l id="s1:l11" met="1" type="+-">Geen <rhyme label="d" type="f" corresp="#s1:l9">schroomen</rhyme>,</l>
        <l id="s1:l12" met="3" type="-+">Can daer sijn vreught <rhyme label="d" type="f" corresp="#s1:l9">betoomen</rhyme>:</l>
        <l id="s1:l13" met="2" type="-+">Als t'is in't <rhyme label="e" type="m">velt</rhyme>,,</l>
        <l id="s1:l14" met="2" type="-+">Met zoet <rhyme label="e" type="m" corresp="#s1:l13">ghewelt</rhyme>,</l>
        <l id="s1:l15" met="3" type="-+">Hoortmen sijn fluytjen speelen, <rhyme label="f" type="f">ò</rhyme></l>
        <l id="s1:l16" met="2" type="-+">Het houdt den <rhyme label="g" type="m">spot</rhyme>,,</l>
        <l id="s1:l17" met="2" type="-+">Met <rhyme label="g" type="m" corresp="#s1:l16">Vogel-cot</rhyme>,</l>
        <l id="s1:l18" met="2" type="-+">In 't lommer <rhyme label="h" type="m">groen</rhyme>,,</l>
        <l id="s1:l19" met="2" type="-+">Is het te <rhyme label="h" type="m" corresp="#s1:l18">doen</rhyme></l>
        <l id="s1:l20" met="3" type="-+">Om t'beestjen t'hooren <rhyme label="f" type="f" corresp="#s1:l15">quelen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Eer phoebi <rhyme label="a" type="m">licht</rhyme>,,</l>
        <l id="s2:l2" met="2" type="-+">Aen ons <rhyme label="a" type="m" corresp="#s2:l1">ghesicht</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Syn jonst comt <rhyme label="b" type="f">bewysen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Als door nateur <rhyme label="a" type="m" corresp="#s2:l1">bericht</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Comt soetjens op te <rhyme label="b" type="f" corresp="#s2:l3">rysen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">En met een diep <rhyme label="c" type="m">oodtmoet</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Het lieve beestjen <rhyme label="c" type="m" corresp="#s2:l6">zoet</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Synen heer en Schepper <rhyme label="c" type="m" corresp="#s2:l6">groet</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Het gaet sich vreughdig <rhyme label="d" type="f">dwinghen</rhyme></l>
        <l id="s2:l10" met="3" type="-+">Het gaet sich vreughdig <rhyme label="d" type="f" corresp="#s2:l9">dwinghen</rhyme></l>
        <l id="s2:l11" met="1" type="+-">Tot <rhyme label="d" type="f" corresp="#s2:l9">singhen</rhyme>,,</l>
        <l id="s2:l12" met="3" type="-+">Al huppelen en <rhyme label="d" type="f" corresp="#s2:l9">springhen</rhyme></l>
        <l id="s2:l13" met="2" type="-+">Het schynt den <rhyme label="e" type="m">mensch</rhyme>,</l>
        <l id="s2:l14" met="2" type="-+">Na Godes <rhyme label="e" type="m" corresp="#s2:l13">wensch</rhyme>,</l>
        <l id="s2:l15" met="3" type="-+">Syn plicht te commen <rhyme label="f" type="f">leeren</rhyme>,</l>
        <l id="s2:l16" met="2" type="-+">Hoe dat hy <rhyme label="g" type="m">moet</rhyme>,,</l>
        <l id="s2:l17" met="2" type="-+">Godt die hem <rhyme label="g" type="m" corresp="#s2:l16">voet</rhyme>,</l>
        <l id="s2:l18" met="2" type="-+">Met <rhyme label="h" type="m">lof-gesanck</rhyme>,,</l>
        <l id="s2:l19" met="2" type="-+">en soet <rhyme label="h" type="m" corresp="#s2:l18">gheclanck</rhyme></l>
        <l id="s2:l20" met="3" type="-+">Danckbaerrelijck <rhyme label="f" type="f" corresp="#s2:l15">vereeren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">In't groene <rhyme label="a" type="m">wout</rhyme>,,</l>
        <l id="s3:l2" met="2" type="-+">Siet t'menogh <rhyme label="a" type="m" corresp="#s3:l1">faut</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Veel minnelijcke <rhyme label="b" type="f">keuren</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Daer't blomken wordt <rhyme label="a" type="m" corresp="#s3:l1">betrouwt</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Datmen daer naer siet <rhyme label="b" type="f" corresp="#s3:l3">treuren</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Het lieve beestjen <rhyme label="c" type="m">siet</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Nochtans en segh'-het <rhyme label="c" type="m" corresp="#s3:l6">niet</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Wat dat daer al is <rhyme label="c" type="m" corresp="#s3:l6">gheschiet</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Langhs d'helder water <rhyme label="d" type="f">stroomen</rhyme>,</l>
        <l id="s3:l10" met="3" type="-+">Langhs d'helder water <rhyme label="d" type="f" corresp="#s3:l9">stroomen</rhyme>,</l>
        <l id="s3:l11" met="1" type="+-">En <rhyme label="d" type="f" corresp="#s3:l9">boomen</rhyme>,</l>
        <l id="s3:l12" met="3" type="-+">Het can syn bexken <rhyme label="d" type="f" corresp="#s3:l9">toomẽ</rhyme></l>
        <l id="s3:l13" met="2" type="-+">'t Schaemt hem voor <rhyme label="e" type="m">clap</rhyme>,</l>
        <l id="s3:l14" met="2" type="-+">En vuyl <rhyme label="e" type="m" corresp="#s3:l13">ghesnap</rhyme>,</l>
        <l id="s3:l15" met="3" type="-+">Van dert'le Venus <rhyme label="f" type="f">dieren</rhyme>,</l>
        <l id="s3:l16" met="2" type="-+">Het leert te <rhyme label="g" type="m">tongh</rhyme>,,</l>
        <l id="s3:l17" met="2" type="-+">Van oud en <rhyme label="g" type="m" corresp="#s3:l16">jongh</rhyme>,</l>
        <l id="s3:l18" met="2" type="-+">Beclat met <rhyme label="h" type="m">quaet</rhyme>,,</l>
        <l id="s3:l19" met="2" type="-+">En vuyl <rhyme label="h" type="m" corresp="#s3:l18">misdaet</rhyme>,</l>
        <l id="s3:l20" met="3" type="-+">Te houden goed' <rhyme label="f" type="f" corresp="#s3:l15">manieren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Het blyft in <rhyme label="a" type="m">rust</rhyme>,,</l>
        <l id="s4:l2" met="2" type="-+">Met zoete <rhyme label="a" type="m" corresp="#s4:l1">lust</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Als Phoebus comt te <rhyme label="b" type="f">daelen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Naer d'onderaerdsche <rhyme label="a" type="m" corresp="#s4:l1">cust</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Tot hy syn gulde <rhyme label="b" type="f" corresp="#s4:l3">straelen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Op onsen <rhyme label="c" type="m">orisont</rhyme>,,</l>
        <l id="s4:l7" met="3" type="-+">Mildadig weder <rhyme label="c" type="m" corresp="#s4:l6">jont</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Als hy heeft gedaen de <rhyme label="c" type="m" corresp="#s4:l6">rond'</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">Het beestjen schynt <rhyme label="d" type="f">t'herleven</rhyme>,</l>
        <l id="s4:l10" met="3" type="-+">Het beestjen schynt <rhyme label="d" type="f" corresp="#s4:l9">t'herleven</rhyme>,</l>
        <l id="s4:l11" met="1" type="+-"><rhyme label="d" type="f" corresp="#s4:l9">Ghedreven</rhyme>,,</l>
        <l id="s4:l12" met="3" type="-+">Om Godt den lof te <rhyme label="d" type="f" corresp="#s4:l9">geven</rhyme></l>
        <l id="s4:l13" met="2" type="-+">Het singht <rhyme label="e" type="m">Osy</rhyme> ,,</l>
        <l id="s4:l14" met="2" type="-+">Met herten <rhyme label="e" type="m" corresp="#s4:l13">bly</rhyme>,</l>
        <l id="s4:l15" met="3" type="-+">Dewyl de Menschen <rhyme label="f" type="f">rellen</rhyme>,</l>
        <l id="s4:l16" met="2" type="-+">Een vuyl <rhyme label="g" type="m">ghedicht</rhyme> ,,</l>
        <l id="s4:l17" met="2" type="-+">Dat al <rhyme label="g" type="m" corresp="#s4:l16">onsticht</rhyme>,</l>
        <l id="s4:l18" met="2" type="-+">Soo dat s'in <rhyme label="h" type="m">schyn</rhyme>,,</l>
        <l id="s4:l19" met="2" type="-+">Maer Menschen <rhyme label="h" type="m" corresp="#s4:l18">syn</rhyme></l>
        <l id="s4:l20" met="3" type="-+">Doch beesten in Mensche <rhyme label="f" type="f" corresp="#s4:l15">vellen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Het beestjẽ <rhyme label="a" type="m">reyn</rhyme>,,</l>
        <l id="s5:l2" met="2" type="-+">leert groot en <rhyme label="a" type="m" corresp="#s5:l1">clein</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Syn vrydom te <rhyme label="b" type="f">bewaeren</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">En in het groene <rhyme label="a" type="m" corresp="#s5:l1">pleyn</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Te vluchten 's Jagers <rhyme label="b" type="f" corresp="#s5:l3">gaeren</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Die met een soet <rhyme label="c" type="m">gheluydt</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Het Vogelk' inde <rhyme label="c" type="m" corresp="#s5:l6">muyt</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Tracht te krygen voor een <rhyme label="c" type="m" corresp="#s5:l6">buyt</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">'tVliegh langhs de water <rhyme label="d" type="f">stroomen</rhyme></l>
        <l id="s5:l10" met="3" type="-+">'tVliegh langhs de water <rhyme label="d" type="f" corresp="#s5:l9">stroomen</rhyme></l>
        <l id="s5:l11" met="1" type="+-">Op <rhyme label="d" type="f" corresp="#s5:l9">boomen</rhyme>,</l>
        <l id="s5:l12" met="3" type="-+">'t Vlught van het net al <rhyme label="d" type="f" corresp="#s5:l9">schroomen</rhyme></l>
        <l id="s5:l13" met="2" type="-+">In dien het <rhyme label="e" type="m">past</rhyme> ,,</l>
        <l id="s5:l14" met="2" type="-+">Dat 't wort <rhyme label="e" type="m" corresp="#s5:l13">verrast</rhyme>,</l>
        <l id="s5:l15" met="3" type="-+">Door s' Jaegers slimme <rhyme label="f" type="f">treecken</rhyme>,</l>
        <l id="s5:l16" met="2" type="-+">Noch spys noch <rhyme label="g" type="m">dranck</rhyme>,,</l>
        <l id="s5:l17" met="2" type="-+">Syn levẽ <rhyme label="g" type="m" corresp="#s5:l16">lanck</rhyme></l>
        <l id="s5:l18" met="2" type="-+">Het nutten <rhyme label="h" type="m">sal</rhyme>,,</l>
        <l id="s5:l19" met="2" type="-+">'tMaeckt droef <rhyme label="h" type="m" corresp="#s5:l18">geschal</rhyme>,</l>
        <l id="s5:l20" met="3" type="-+">Tot 't hertje comt te <rhyme label="f" type="f" corresp="#s5:l15">breeken</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">wanneer den <rhyme label="a" type="m">tydt</rhyme>,,</l>
        <l id="s6:l2" met="2" type="-+">Die't al <rhyme label="a" type="m" corresp="#s6:l1">verslyt</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Van sterven comt te <rhyme label="b" type="f">naecken</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Het beestjen gaet met <rhyme label="a" type="m" corresp="#s6:l1">vlyt</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Ter doodt sich veerdigh <rhyme label="b" type="f" corresp="#s6:l3">maecken</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Om met een soet <rhyme label="c" type="m">gheluyt</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Syn gheest te blaesen <rhyme label="c" type="m" corresp="#s6:l6">uyt</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">waer door het den Mensch <rhyme label="c" type="m" corresp="#s6:l6">beduyt</rhyme>,</l>
        <l id="s6:l9" met="3" type="-+">Te leven en te <rhyme label="d" type="f">sterven</rhyme>,</l>
        <l id="s6:l10" met="3" type="-+">Te leven en te <rhyme label="d" type="f" corresp="#s6:l9">sterven</rhyme>,</l>
        <l id="s6:l11" met="1" type="+-">Om <rhyme label="d" type="f" corresp="#s6:l9">t'herven</rhyme> ,,</l>
        <l id="s6:l12" met="3" type="-+">Een leven sonder <rhyme label="d" type="f" corresp="#s6:l9">derven</rhyme></l>
        <l id="s6:l13" met="2" type="-+">Siet hoe een <rhyme label="e" type="m">beest</rhyme>,,</l>
        <l id="s6:l14" met="2" type="-+">Na Godes <rhyme label="e" type="m" corresp="#s6:l13">geest</rhyme>,</l>
        <l id="s6:l15" met="3" type="-+">Den Mensch hier comt te <rhyme label="f" type="f">leeren</rhyme>,</l>
        <l id="s6:l16" met="2" type="-+">Hoe dat hy <rhyme label="g" type="m">moet</rhyme>,,</l>
        <l id="s6:l17" met="2" type="-+">Met liefde <rhyme label="g" type="m" corresp="#s6:l16">soet</rhyme>,</l>
        <l id="s6:l18" met="2" type="-+">Op 'sweirels <rhyme label="h" type="m">pleyn</rhyme> ,,</l>
        <l id="s6:l19" met="2" type="-+">Met herten <rhyme label="h" type="m" corresp="#s6:l18">reyn</rhyme></l>
        <l id="s6:l20" met="3" type="-+">In d'Hemelen <rhyme label="f" type="f" corresp="#s6:l15">verkeeren</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="2" type="-+">wegh <rhyme label="a" type="m">Vledermuys</rhyme>,</l>
        <l id="s7:l2" met="2" type="-+">Vuyl nacht - <rhyme label="a" type="m" corresp="#s7:l1">gespuys</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">VVegh Couckoucks vuyle <rhyme label="b" type="f">beesten</rhyme>.</l>
        <l id="s7:l4" met="3" type="-+">Die snachs met groot <rhyme label="a" type="m" corresp="#s7:l1">ghedruys</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Daer vlieght als helsche <rhyme label="b" type="f" corresp="#s7:l3">geesten</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">In duyster Maene <rhyme label="c" type="m">schyn</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Tot sy met Mars eens <rhyme label="c" type="m" corresp="#s7:l6">zyn</rhyme>;</l>
        <l id="s7:l8" met="3" type="-+">In het net oft Venus <rhyme label="c" type="m" corresp="#s7:l6">pyn</rhyme>,</l>
        <l id="s7:l9" met="3" type="-+">Al condy door u <rhyme label="d" type="f">springhen</rhyme>,</l>
        <l id="s7:l10" met="3" type="-+">Al condy door u <rhyme label="d" type="f" corresp="#s7:l9">springhen</rhyme>,</l>
        <l id="s7:l11" met="1" type="+-">En <rhyme label="d" type="f" corresp="#s7:l9">singen</rhyme> ,,</l>
        <l id="s7:l12" met="3" type="-+">Een Nachtergal <rhyme label="d" type="f" corresp="#s7:l9">voortbringẽ</rhyme></l>
        <l id="s7:l13" met="2" type="-+">Men siet <rhyme label="e" type="m">gheschieden</rhyme>,</l>
        <l id="s7:l14" met="2" type="-+">Couckouck moet <rhyme label="e" type="m" corresp="#s7:l13">Vlieden</rhyme>,</l>
        <l id="s7:l15" met="3" type="-+">In canten en in <rhyme label="f" type="f">haeghen</rhyme>,</l>
        <l id="s7:l16" met="2" type="-+">Men heet het <rhyme label="g" type="m">al</rhyme>,,</l>
        <l id="s7:l17" met="2" type="-+">Den <rhyme label="g" type="m" corresp="#s7:l16">Nachtergal</rhyme>:</l>
        <l id="s7:l18" met="2" type="-+">Doch met den <rhyme label="h" type="m">naem</rhyme>,</l>
        <l id="s7:l19" met="2" type="-+">Tot Couckoucks <rhyme label="h" type="m" corresp="#s7:l18">blaem</rhyme>,</l>
        <l id="s7:l20" met="3" type="-+">Zal 't Couckoucks veren <rhyme label="f" type="f" corresp="#s7:l15">draghen</rhyme>.</l>
      </lg>
    </lg>
  </text>

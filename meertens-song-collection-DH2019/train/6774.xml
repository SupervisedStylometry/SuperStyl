    <melody>Almachtige God u loven wij</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Justus de Harduwijn</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ALmachtigh God u loven <rhyme label="a" type="m">wy</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Die allom hebt u <rhyme label="a" type="m" corresp="#s1:l1">Heerschappy</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Die den om-loop van deser <rhyme label="b" type="f">eerde</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Als Vaeder houwt in eer, en <rhyme label="b" type="f" corresp="#s1:l3">weerde</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">D’Inghels en d’Hemel-crachten <rhyme label="a" type="m">al</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Die loven u met soet <rhyme label="a" type="m" corresp="#s2:l1">gheschal</rhyme>.</l>
        <l id="s2:l3" met="4" type="-+">De Cherubins, en <rhyme label="b" type="f">Seraphinnen</rhyme></l>
        <l id="s2:l4" met="4" type="-+">In uwen lof by-nae <rhyme label="b" type="f" corresp="#s2:l3">ontsinnen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Zy roepen Heyligh, Heyligh <rhyme label="a" type="m">Godt</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Iehova, ende <rhyme label="a" type="m" corresp="#s3:l1">Sabaoth</rhyme>.</l>
        <l id="s3:l3" met="4" type="-+">Hemel, en Aerde staen <rhyme label="b" type="f">ghelaeden</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Met uwen lof, en hooghe <rhyme label="b" type="f" corresp="#s3:l3">daeden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">U zaeligh-rijck <rhyme label="a" type="m">Apostel-schaer</rhyme></l>
        <l id="s4:l2" met="4" type="-+">En u Proheten <rhyme label="a" type="m" corresp="#s4:l1">allegaer</rhyme></l>
        <l id="s4:l3" met="4" type="-+">En Martelaeren roode <rhyme label="b" type="f">bende</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Singhen u lof al sonder <rhyme label="b" type="f" corresp="#s4:l3">hende</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Soo doet de Kerck u oock <rhyme label="a" type="m">altijt</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">O Vaeder die allomme <rhyme label="a" type="m" corresp="#s5:l1">sijt</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Door wiens licht worden <rhyme label="b" type="f">beschemelt</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Lucht, zee, en aerd, en het <rhyme label="b" type="f" corresp="#s5:l3">ghehemelt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Zy singht oock ‘tlof van uwen <rhyme label="a" type="m">Soon</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Vlietigh altoos tot u <rhyme label="a" type="m" corresp="#s6:l1">gheboon</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Zy singht den Gheest, die g’hebt <rhyme label="b" type="f">ghesonden</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Om te doen spreken stomme <rhyme label="b" type="f" corresp="#s6:l3">monden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">O Christe dan als Coninck <rhyme label="a" type="m">groot</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Syt ghy ghecommen t’onser <rhyme label="a" type="m" corresp="#s7:l1">noot</rhyme>:</l>
        <l id="s7:l3" met="4" type="-+">En om den mensche te <rhyme label="b" type="f">ghenesen</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Hebt ghy een mensche willen <rhyme label="b" type="f" corresp="#s7:l3">wesen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Ghy hebt de Doot door uwe <rhyme label="a" type="m">cracht</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Verstickt, vernielt, en <rhyme label="a" type="m" corresp="#s8:l1">onghebracht</rhyme>:</l>
        <l id="s8:l3" met="4" type="-+">En haeren strael, net <rhyme label="b" type="f">afghebroken</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Waer door den Hemel staet <rhyme label="b" type="f" corresp="#s8:l3">ontloken</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Soo dat ghy nu in ‘tzaeligh <rhyme label="a" type="m">land</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Sit aen uw’s Vaeders rechter <rhyme label="a" type="m" corresp="#s9:l1">hand</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Op eenen throon zeer rijck <rhyme label="b" type="f">bepeerelt</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Als Rechter groot van heel de <rhyme label="b" type="f" corresp="#s9:l3">Weerelt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Wel aen o Iesu Christe <rhyme label="a" type="m">soet</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Comt u dienaeren te <rhyme label="a" type="m" corresp="#s10:l1">ghemoet</rhyme>:</l>
        <l id="s10:l3" met="4" type="-+">Die ghy soo dier hebt willen <rhyme label="b" type="f">coopen</rhyme>;</l>
        <l id="s10:l4" met="4" type="-+">Dat gh’u in bloedt hebt moeten <rhyme label="b" type="f" corresp="#s10:l3">doopen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Laet ons van d’uyt-ghelesen <rhyme label="a" type="m">sijn</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Die nu verlost uyt druck en <rhyme label="a" type="m" corresp="#s11:l1">pijn</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Hun spieghelen in alle <rhyme label="b" type="f">lusten</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">En eeuwelijck met u oock <rhyme label="b" type="f" corresp="#s11:l3">rusten</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Iont dogh u volck al dit <rhyme label="a" type="m">gheluck</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">En van hun weert dogh allen <rhyme label="a" type="m" corresp="#s12:l1">druck</rhyme>:</l>
        <l id="s12:l3" met="4" type="-+">Noch en ghehinght niet te <rhyme label="b" type="f">bederven</rhyme></l>
        <l id="s12:l4" met="4" type="-+">Die ghy voor d’uw hebt willen <rhyme label="b" type="f" corresp="#s12:l3">erven</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Want sonder op-bouw, en <rhyme label="a" type="m">verdragh</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">U zeghenen wy allen <rhyme label="a" type="m" corresp="#s13:l1">dagh</rhyme>:</l>
        <l id="s13:l3" met="4" type="-+">En niet en is ons <rhyme label="b" type="f">aenghenaeme</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Dan te verheffen uwen <rhyme label="b" type="f" corresp="#s13:l3">naemen</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">O Heer dat sonder <rhyme label="a" type="m">siele-schae</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">Heel desen dagh ten Avent <rhyme label="a" type="m" corresp="#s14:l1">gae</rhyme>:</l>
        <l id="s14:l3" met="4" type="-+">En de sondaeren wilt <rhyme label="b" type="f">ghedincken</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">Met u ghenae die te <rhyme label="b" type="f" corresp="#s14:l3">beschincken</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Soo sullen wy, o Hooghsten <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">U lof uyt-singhen meer en <rhyme label="a" type="m" corresp="#s15:l1">meer</rhyme>:</l>
        <l id="s15:l3" met="4" type="-+">Want al ons hope vroegh, en <rhyme label="b" type="f">spaede</rhyme></l>
        <l id="s15:l4" met="4" type="-+">Alleene steunt op u <rhyme label="b" type="f" corresp="#s15:l3">ghenaede</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

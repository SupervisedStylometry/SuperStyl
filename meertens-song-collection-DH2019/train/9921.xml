  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">GOdt de Vader <rhyme label="a" type="f">almachtich</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Alleene wijs end' <rhyme label="b" type="m">goet</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Door sijnen Gheest <rhyme label="a" type="f" corresp="#s1:l1">eendrachtich</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Verstercke dijn <rhyme label="b" type="m" corresp="#s1:l2">ghemoet</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Dat Christus soet, in liefden <rhyme label="b" type="m" corresp="#s1:l2">gloet</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Vaste ghewortelt <rhyme label="c" type="m">fijn</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">In dijn, herte <rhyme label="a" type="f" corresp="#s1:l1">woonachtich</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Mach doort' gheloove <rhyme label="c" type="m" corresp="#s1:l6">zijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Dit wensch' ick u ter <rhyme label="a" type="f">vromen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Mijn suster in den <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Ghelijck ghy <rhyme label="a" type="f" corresp="#s2:l1">aenghenomen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Hebt Christum end' sijn <rhyme label="b" type="m" corresp="#s2:l2">leer</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Ootmoedich seer, sonder <rhyme label="b" type="m" corresp="#s2:l2">afkeer</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Wandelt sachtmoedich <rhyme label="c" type="m">tem</rhyme></l>
        <l id="s2:l7" met="3" type="-+">In hem, sonder <rhyme label="a" type="f" corresp="#s2:l1">verschromen</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Nae t'nieu <rhyme label="c" type="m" corresp="#s2:l6">Jerusalem</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Met den gordel der <rhyme label="a" type="f">waerheyt</rhyme></l>
        <l id="s3:l2" met="3" type="-+">V lendenen <rhyme label="b" type="m">omgort</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Maeckt dat uwe <rhyme label="a" type="f" corresp="#s3:l1">zebaerheyt</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Over al bekent <rhyme label="b" type="m" corresp="#s3:l2">wort</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Desen tijdt cort, den reuck <rhyme label="b" type="m" corresp="#s3:l2">uytstort</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Van den Name <rhyme label="c" type="m">Christi</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Dat sy, die in s'doors <rhyme label="a" type="f" corresp="#s3:l1">swaerheyt</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Zijn moghen worden <rhyme label="c" type="m" corresp="#s3:l6">vry</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Godt den Heere <rhyme label="a" type="f">behaghen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Wilt, neerstich alder <rhyme label="b" type="m">meest</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Offert hem een <rhyme label="a" type="f" corresp="#s4:l1">verslaghen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Hert', end' beangsten <rhyme label="b" type="m" corresp="#s4:l2">gheest</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Want die hem vreest, in dit <rhyme label="b" type="m" corresp="#s4:l2">foreest</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Niet ghebreken en <rhyme label="c" type="m">sal</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Laet al, u sorghs <rhyme label="a" type="f" corresp="#s4:l1">draghen</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Godt, hy voedt sijn <rhyme label="c" type="m" corresp="#s4:l6">ghetal</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Godt heeft ons, soo wy <rhyme label="a" type="f">mercken</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">In't licht gheroepen <rhyme label="b" type="m">saen</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Laet ons die duyster <rhyme label="a" type="f" corresp="#s5:l1">wercken</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Van ons aflegghen <rhyme label="b" type="m" corresp="#s5:l2">gaen</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Nae Schrifs vermaen, end' doen <rhyme label="b" type="m" corresp="#s5:l2">aen</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Des lichts wapenen <rhyme label="c" type="m">claer</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Eerbaer, door s'gheests <rhyme label="a" type="f" corresp="#s5:l1">verstercken</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Christum wandelen <rhyme label="c" type="m" corresp="#s5:l6">naer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Die tot u Ziele <rhyme label="a" type="f">spreken</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Buyghet u neder <rhyme label="b" type="m">plat</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Vwen rugghe <rhyme label="a" type="f" corresp="#s6:l1">ghelcken</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Zy voor ons eenen <rhyme label="b" type="m" corresp="#s6:l2">padt</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Verdraeght al dat, want nae de <rhyme label="b" type="m" corresp="#s6:l2">stadt</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Is den wech engh' end' <rhyme label="c" type="m">smal</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Godt sal, die boosheyt <rhyme label="a" type="f" corresp="#s6:l1">wreken</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Van sijn vyanden <rhyme label="c" type="m" corresp="#s6:l6">al</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Dus wandelt seer <rhyme label="a" type="f">behoedich</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Nae t'nieu beloefde <rhyme label="b" type="m">landt</rhyme></l>
        <l id="s7:l3" met="3" type="-+">End' weest altijts <rhyme label="a" type="f" corresp="#s7:l1">ootmoedich</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Onder Gods stercke <rhyme label="b" type="m" corresp="#s7:l2">handt</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Betrout hem, want, hy noyt <rhyme label="b" type="m" corresp="#s7:l2">yemandt</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Eerst verlaten en <rhyme label="c" type="m">heeft</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Hy gheeft, troost <rhyme label="a" type="f" corresp="#s7:l1">overvloedich</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Elck, die nae sijn woordt <rhyme label="c" type="m" corresp="#s7:l6">leeft</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Hoe wel wy dwasen <rhyme label="a" type="f">blijcken</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Voor die weerelt vol <rhyme label="b" type="m">spots</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Gaet recht sonder <rhyme label="a" type="f" corresp="#s8:l1">omkijcken</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Doet nae t'woordt des <rhyme label="b" type="m" corresp="#s8:l2">ghebodts</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">D'huys vrouwe Loths, en den Man <rhyme label="b" type="m" corresp="#s8:l2">Gods</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Doch wel ghedachtich <rhyme label="c" type="m">zijt</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Gheen tijdt, en wilt <rhyme label="a" type="f" corresp="#s8:l1">afwijcken</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Van Godt <rhyme label="c" type="m" corresp="#s8:l6">ghebenedijt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Van die Gods woordt <rhyme label="a" type="f">verdraeyen</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Laet u verleyden <rhyme label="b" type="m">niet</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Noch met gheen leughen <rhyme label="a" type="f" corresp="#s9:l1">paeyen</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Der vreemder stemme <rhyme label="b" type="m" corresp="#s9:l2">vliedt</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Wel voor u met, dat ghy als <rhyme label="b" type="m" corresp="#s9:l2">riet</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">V met een loos <rhyme label="c" type="m">opsiet</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Niet snel, en laet om <rhyme label="a" type="f" corresp="#s9:l1">waeyen</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Door Menschen seer <rhyme label="c" type="m" corresp="#s9:l6">fel</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Als David sonder <rhyme label="a" type="f">treuren</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Bevecht den Reuse <rhyme label="b" type="m">groot</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Ghy sult hem wel <rhyme label="a" type="f" corresp="#s10:l1">verscheuren</rhyme></l>
        <l id="s10:l4" met="3" type="-+">End' verslinden als <rhyme label="b" type="m" corresp="#s10:l2">broodt</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Vreest gheenen noot, weest tot der <rhyme label="b" type="m" corresp="#s10:l2">doot</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Ghetrouwe, niet en <rhyme label="c" type="m">hinckt</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Maer springt, over de <rhyme label="a" type="f" corresp="#s10:l1">mueren</rhyme></l>
        <l id="s10:l8" met="3" type="-+">Met Godt, door d'enghe <rhyme label="c" type="m" corresp="#s10:l6">dringt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Dringt door, nae den <rhyme label="a" type="f">betame</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Die rechte deure <rhyme label="b" type="m">in</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Volght niet een dief vol <rhyme label="a" type="f" corresp="#s11:l1">blame</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Die niet en heeft sulcken <rhyme label="b" type="m" corresp="#s11:l2">sin</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Want van begin, om aertsch <rhyme label="b" type="m" corresp="#s11:l2">ghewin</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Hy steelt ende <rhyme label="c" type="m">verworght</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">End' sorght, niet, maer Gods <rhyme label="a" type="f" corresp="#s11:l1">Name</rhyme></l>
        <l id="s11:l8" met="3" type="-+">Zy u een stercke <rhyme label="c" type="m" corresp="#s11:l6">borcht</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Gode ick u <rhyme label="a" type="f">bevele</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">En t'Woordt sijner <rhyme label="b" type="m">ghena</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Loeft hem met hert' end' <rhyme label="a" type="f" corresp="#s12:l1">kele</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Danckt, bidt, smeeckt, vroech end' <rhyme label="b" type="m" corresp="#s12:l2">spa</rhyme>,</l>
        <l id="s12:l5" met="4" type="-+">Door Christum jae, end' slaet wel <rhyme label="b" type="m" corresp="#s12:l2">ga</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Zijt wacker, moe noch <rhyme label="c" type="m">mat</rhyme>,</l>
        <l id="s12:l7" met="3" type="-+">Op dat niemandt en <rhyme label="a" type="f" corresp="#s12:l1">stele</rhyme></l>
        <l id="s12:l8" met="3" type="-+">V croone, cleedt end' <rhyme label="c" type="m" corresp="#s12:l6">schat</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

    <tags>
      <tag standard-name="rederijkerslied" translation="rhetorician song">rederijkerslied</tag>
    </tags>
    <melody>De lustelijke mei is nu in de tijd</melody>
    <categories>
      <category translation="groups">groepen</category>
    </categories>
  <author>Pieter Sterlincx</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Nederlant, schoon en <rhyme label="a" type="m">playsant</rhyme></l>
        <l id="s1:l2" met="5" type="-+">Verciert met schoone // steden, schoone <rhyme label="b" type="f">steden</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Seer trijomphant, besayt, <rhyme label="a" type="m" corresp="#s1:l1">beplant</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Vol nering en vrijheden // <rhyme label="b" type="f" corresp="#s1:l2">vrijheden</rhyme></l>
        <l id="s1:l5" met="4" type="+-">Maer laes voor dees weelde <rhyme label="c" type="m">groot</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Crijchdy Orloch ende <rhyme label="c" type="m" corresp="#s1:l5">aenstoot</rhyme></l>
        <l id="s1:l7" met="3" type="+-">Die spaignaerts v <rhyme label="d" type="f">benouwen</rhyme></l>
        <l id="s1:l8" met="5" type="-+">O Mars wat condy brouwen // condy <rhyme label="d" type="f" corresp="#s1:l7">brouwen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Meghem, Arenberch, [...] <rhyme label="a" type="m">wreet</rhyme></l>
        <l id="s2:l2" met="5" type="-+">Met Gerlaimont, bloet ghierich // bloet <rhyme label="b" type="f">ghierich</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Dees zijn het merck, al van <rhyme label="a" type="m" corresp="#s2:l1">vleet</rhyme></l>
        <l id="s2:l4" met="4" type="-+">En hebben u schoffierich // <rhyme label="b" type="f" corresp="#s2:l2">schoffierich</rhyme></l>
        <l id="s2:l5" met="4" type="+-">In Duckdalfs handen <rhyme label="c" type="m">ghestelt</rhyme></l>
        <l id="s2:l6" met="4" type="+-">En in der spaignaerden <rhyme label="c" type="m" corresp="#s2:l5">ghewelt</rhyme></l>
        <l id="s2:l7" met="3" type="+-">Dat zy v bederuen <rhyme label="d" type="f">souwen</rhyme></l>
        <l id="s2:l8" met="5" type="-+">O Mars wat condy brouwen // condy <rhyme label="d" type="f" corresp="#s2:l7">brouwen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ducq d’Alue snel, rooft v <rhyme label="a" type="m">vrijheyt</rhyme></l>
        <l id="s3:l2" met="5" type="-+">Met strop, sweert, ende coorden // ende <rhyme label="b" type="f">coorden</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Achitophel, zijn raet wt <rhyme label="a" type="m" corresp="#s3:l1">leyt</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Datment al sou vermoorden // <rhyme label="b" type="f" corresp="#s3:l2">vermoorden</rhyme></l>
        <l id="s3:l5" met="4" type="+-">Aman, hier in <rhyme label="c" type="m">accordeert</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Maer Godt heeft het niet <rhyme label="c" type="m" corresp="#s3:l5">begheert</rhyme></l>
        <l id="s3:l7" met="3" type="+-">Tsou wijf en kint <rhyme label="d" type="f">berouwen</rhyme></l>
        <l id="s3:l8" met="5" type="-+">O Mars wat condy brouwen // condy <rhyme label="d" type="f" corresp="#s3:l7">brouwen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Doort d’oorloch quaet, zijt ghy <rhyme label="a" type="m">gheschent</rhyme></l>
        <l id="s4:l2" met="5" type="-+">Verbrant, huysen, en houen // <rhyme label="b" type="f">houen</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Die uwen staet, hebben <rhyme label="a" type="m" corresp="#s4:l1">ghekent</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Gaen haer in u bedroeuen // <rhyme label="b" type="f" corresp="#s4:l2">bedroeuen</rhyme></l>
        <l id="s4:l5" met="4" type="+-">Maer wilt dit lijden <rhyme label="c" type="m">verdult</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Denct tis al verdiende <rhyme label="c" type="m" corresp="#s4:l5">schult</rhyme></l>
        <l id="s4:l7" met="3" type="+-">Israel wilt <rhyme label="d" type="f">aenschouwen</rhyme></l>
        <l id="s4:l8" met="5" type="-+">O Mars wat condy brouwen // condy <rhyme label="d" type="f" corresp="#s4:l7">brouwen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ghy bedreeft meest, <rhyme label="a" type="m">afgodery</rhyme></l>
        <l id="s5:l2" met="5" type="-+">Tlant was daer me beghoten // <rhyme label="b" type="f">beghoten</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Tghecroonde beest, dat diende <rhyme label="a" type="m" corresp="#s5:l1">ghy</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Veruolchde Godts ghenoten // <rhyme label="b" type="f" corresp="#s5:l2">ghenoten</rhyme></l>
        <l id="s5:l5" met="4" type="+-">Al u wachters waren <rhyme label="c" type="m">blint</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Stomme handen, slapens <rhyme label="c" type="m" corresp="#s5:l5">ghesint</rhyme>,</l>
        <l id="s5:l7" met="3" type="+-">Gods woort zy niet <rhyme label="d" type="f">ontfouwen</rhyme></l>
        <l id="s5:l8" met="5" type="-+">O Mars wat condy brouwen // condy <rhyme label="d" type="f" corresp="#s5:l7">brouwen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Maer maghet schoon, Godt heeft <rhyme label="a" type="m">verhoort</rhyme></l>
        <l id="s6:l2" met="5" type="-+">V kermen ende claghen // ende <rhyme label="b" type="f">claghen</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Sent v tot loon, zijn Godlijck <rhyme label="a" type="m" corresp="#s6:l1">woort</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Dus schept daer in behaghen // <rhyme label="b" type="f" corresp="#s6:l2">behaghen</rhyme></l>
        <l id="s6:l5" met="4" type="+-">V vyanden hy <rhyme label="c" type="m">verdrijft</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Die daer veel hebben <rhyme label="c" type="m" corresp="#s6:l5">ontlijft</rhyme></l>
        <l id="s6:l7" met="3" type="+-">Soo mannen ende <rhyme label="d" type="f">vrouwen</rhyme></l>
        <l id="s6:l8" met="5" type="-+">O Mars wat condy brouwen // condy <rhyme label="d" type="f" corresp="#s6:l7">brouwen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Lof Prince goet, die ons <rhyme label="a" type="m">beurijt</rhyme></l>
        <l id="s7:l2" met="5" type="-+">Van t’iock der spaenscher honden // spaenscher <rhyme label="b" type="f">honden</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Die ons verwoet, leuenden <rhyme label="a" type="m" corresp="#s7:l1">strijt</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Maer d’oorsaeck zijn ons sonden // ons <rhyme label="b" type="f" corresp="#s7:l2">sonden</rhyme></l>
        <l id="s7:l5" met="4" type="+-">Ons vyanden Heere <rhyme label="c" type="m">beschaemt</rhyme></l>
        <l id="s7:l6" met="4" type="+-">En ons met minnen <rhyme label="c" type="m" corresp="#s7:l5">versaemt</rhyme></l>
        <l id="s7:l7" met="3" type="+-">Op u staet ons <rhyme label="d" type="f">betrouwen</rhyme></l>
        <l id="s7:l8" met="5" type="-+">O Mars wat condy brouwen // condy <rhyme label="d" type="f" corresp="#s7:l7">brouwen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

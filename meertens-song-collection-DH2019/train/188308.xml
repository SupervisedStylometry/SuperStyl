  <author>Cornelis Maertsz.</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">WAnneer ick de <rhyme label="a" type="m">Natuer</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Van een geschildert <rhyme label="a" type="m" corresp="#s1:l1">vuer</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Aendachtigh <rhyme label="b" type="f">overpeynsde</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Bemerckt  ick dat den <rhyme label="c" type="m">Aerdt</rhyme></l>
        <l id="s1:l5" met="3" type="-+">En 't wesen der <rhyme label="b" type="f" corresp="#s1:l3">geveynsden</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Door 't selve word <rhyme label="c" type="m" corresp="#s1:l4">verklaert</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">'t Is na 't uytwendigh <rhyme label="a" type="m">blijck</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Het eygen vuer <rhyme label="a" type="m" corresp="#s2:l1">gelijck</rhyme>:</l>
        <l id="s2:l3" met="3" type="-+">Maer alsje steeckt uw <rhyme label="b" type="f">handen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En tast na sijne <rhyme label="c" type="m">gloet</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Soo weet het van gheen <rhyme label="b" type="f" corresp="#s2:l3">branden</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Als 't ander vuer wel <rhyme label="c" type="m" corresp="#s2:l4">doet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">De Hypokrijten <rhyme label="a" type="m">sijn</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Bemantelt, met de <rhyme label="a" type="m" corresp="#s3:l1">schijn</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Van deught, wiens <rhyme label="b" type="f">flicker-stralen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Wel blincken Hel, en <rhyme label="c" type="m">klaer</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">En doen de sinnen <rhyme label="b" type="f" corresp="#s3:l3">dwalen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">In 't oordeelen van <rhyme label="c" type="m" corresp="#s3:l4">haer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Maer deughden-pit vol <rhyme label="a" type="m">kracht</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">By Godt alleen <rhyme label="a" type="m" corresp="#s4:l1">geacht</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Gezielt door het <rhyme label="b" type="f">geloove</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">en is'er gansch niet <rhyme label="c" type="m">by</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">Daerom oock Godt van <rhyme label="b" type="f" corresp="#s4:l3">boven</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Sal segghen, wijckt van <rhyme label="c" type="m" corresp="#s4:l4">my</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

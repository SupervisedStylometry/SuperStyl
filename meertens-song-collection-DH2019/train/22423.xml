    <melody>Onze vader in hemelrijk</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">GOdt Vader in den <rhyme label="a" type="m">Hemelrijck</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">God Son, God heilige Gheest <rhyme label="a" type="m" corresp="#s1:l1">gelijck</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Ghy heylighe <rhyme label="b" type="m">Drijuuldicheyt</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Een eenich Godt in <rhyme label="b" type="m" corresp="#s1:l3">eewicheyt</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">Op u beloefte bidden <rhyme label="c" type="m">wy</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Wilt ons ghenadich hooren <rhyme label="c" type="m" corresp="#s1:l5">ghy</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ach lieue Godt verschoont ons <rhyme label="a" type="m">fier</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Doet niet nae onse verdiensten <rhyme label="a" type="m" corresp="#s2:l1">hier</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Ontfermt dy onser <rhyme label="b" type="m">ghenadelijck</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Dat ons niet en sy <rhyme label="b" type="m" corresp="#s2:l3">schadelijck</rhyme>:</l>
        <l id="s2:l5" met="4" type="-+">Beurijt lijf, goet, bloet ende <rhyme label="c" type="m">eer</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Verlaet ons nu noch <rhyme label="c" type="m" corresp="#s2:l5">nimmermeer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Bewaert ons voor den Sathans <rhyme label="a" type="m">aert</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Dat hy met listen ons niet <rhyme label="a" type="m" corresp="#s3:l1">beswaert</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Keert toch van ons synen vierighen <rhyme label="b" type="m">schicht</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Dat hy ons niet en <rhyme label="b" type="m" corresp="#s3:l3">ouerlicht</rhyme>:</l>
        <l id="s3:l5" met="4" type="-+">Verlaet niet Heere dijnen <rhyme label="c" type="m">knecht</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Als hem die boose weerelt <rhyme label="c" type="m" corresp="#s3:l5">aenuecht</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Bewaert ons Heere van sonden <rhyme label="a" type="m">swaer</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Voor dwaling, laste en schande <rhyme label="a" type="m" corresp="#s4:l1">daer</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Voor Chrijch, haet, vyantschap en <rhyme label="b" type="m">nijt</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Voor water, vier, en dieren <rhyme label="b" type="m" corresp="#s4:l3">tijt</rhyme>:</l>
        <l id="s4:l5" met="4" type="-+">Voor Peste, cranckheyt en <rhyme label="c" type="m">misual</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Voor onweder ende stormen <rhyme label="c" type="m" corresp="#s4:l5">al</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Behoedt ons Heere in allen <rhyme label="a" type="m">noot</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Voor haestighe sieckte ende snellen <rhyme label="a" type="m" corresp="#s5:l1">doot</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Wilt ons Heere toch niet <rhyme label="b" type="m">afgaen</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Als wy voor u stranck oordeel <rhyme label="b" type="m" corresp="#s5:l3">staen</rhyme>:</l>
        <l id="s5:l5" met="4" type="-+">Voor den eewighen doot, o Heere <rhyme label="c" type="m">goet</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Door Jhesum Christum ons <rhyme label="c" type="m" corresp="#s5:l5">behoet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Wy arme sondaers bidden <rhyme label="a" type="m">meer</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">O Jhesu Christe lieue <rhyme label="a" type="m" corresp="#s6:l1">Heer</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">Helpt ons door u Gheboorte <rhyme label="b" type="m">vermaert</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Verrijssenisse en <rhyme label="b" type="m" corresp="#s6:l3">Hemeluaert</rhyme>:</l>
        <l id="s6:l5" met="4" type="-+">Door u lijden, en bloedich <rhyme label="c" type="m">sweet</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Door u cruyce en doot seer <rhyme label="c" type="m" corresp="#s6:l5">wreet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Dijn heylighe Christen Kercke <rhyme label="a" type="m">ghemeyn</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Wilt houden in uwen woorde <rhyme label="a" type="m" corresp="#s7:l1">reyn</rhyme>:</l>
        <l id="s7:l3" met="4" type="-+">Dat haer dienaers zijn <rhyme label="b" type="m">onbesmet</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">In leeringhe en leuen <rhyme label="b" type="m" corresp="#s7:l3">net</rhyme>:</l>
        <l id="s7:l5" met="4" type="-+">Stort uwen Gheest crachtich int <rhyme label="c" type="m">woort</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Op dattet in ons vruchten brengt <rhyme label="c" type="m" corresp="#s7:l5">voort</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Seynt trouwe Dienaers in dijnen <rhyme label="a" type="m">Oest</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Secten en Ketterijen <rhyme label="a" type="m" corresp="#s8:l1">verwoest</rhyme>:</l>
        <l id="s8:l3" met="4" type="-+">Rotten en valsche Leeraers <rhyme label="b" type="m">fel</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Wilt onderworpen u <rhyme label="b" type="m" corresp="#s8:l3">beuel</rhyme>:</l>
        <l id="s8:l5" met="4" type="-+">Brengt op den wech die niet en <rhyme label="c" type="m">faelt</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Die van de waerheyt is <rhyme label="c" type="m" corresp="#s8:l5">ghedwaelt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Wilt slaen door uwe crachtighe <rhyme label="a" type="m">hant</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Al die u woort doen <rhyme label="a" type="m" corresp="#s9:l1">wederstant</rhyme>:</l>
        <l id="s9:l3" met="4" type="-+">Des Torckens moorden van ons <rhyme label="b" type="m">keert</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Dijn Kercke en Christenheyt <rhyme label="b" type="m" corresp="#s9:l3">vermeert</rhyme>:</l>
        <l id="s9:l5" met="4" type="-+">Die hier moet lijden op der <rhyme label="c" type="m">eert</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Wiens bloet voor u altijt is <rhyme label="c" type="m" corresp="#s9:l5">weert</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Beschermt oock lijf,siele, en <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Keert van ons Oproer Crijch, en <rhyme label="a" type="m" corresp="#s10:l1">bloet</rhyme>:</l>
        <l id="s10:l3" met="4" type="-+">Den Coninghen Princen en Heeren <rhyme label="b" type="m">fyn</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Gheeft ghenade dat sy regeerende <rhyme label="b" type="m" corresp="#s10:l3">syn</rhyme>:</l>
        <l id="s10:l5" met="4" type="-+">In alle vrede <rhyme label="c" type="m">waerachtelijck</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Sonder strijden <rhyme label="c" type="m" corresp="#s10:l5">eendrachtelijck</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Gheeft onsen Keyser gheluck en <rhyme label="a" type="m">spoet</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Die cracht der vyanden te nieten <rhyme label="a" type="m" corresp="#s11:l1">doet</rhyme>:</l>
        <l id="s11:l3" met="4" type="-+">Beschermpt oock deser Landen <rhyme label="b" type="m">Heeren</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">En wiltse rijckelijck <rhyme label="b" type="m" corresp="#s11:l3">vermeeren</rhyme>:</l>
        <l id="s11:l5" met="4" type="-+">Der Steden Raet en Ghemeynte <rhyme label="c" type="m">groot</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">Wilt oock beurijden wt den <rhyme label="c" type="m" corresp="#s11:l5">noot</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">In allen angst met hulpe en <rhyme label="a" type="m">daet</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Dijn arme Christenheyt <rhyme label="a" type="m" corresp="#s12:l1">bystaet</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Troost alle herten seer <rhyme label="b" type="m">bedroeft</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Helpt hem die hulpens meer <rhyme label="b" type="m" corresp="#s12:l3">behoeft</rhyme>:</l>
        <l id="s12:l5" met="4" type="-+">Die arme Weesekens <rhyme label="c" type="m">beschermpt</rhyme>,</l>
        <l id="s12:l6" met="4" type="-+">Der Weduwen elende <rhyme label="c" type="m" corresp="#s12:l5">erbermt</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Die beuruchte vroukens ouer <rhyme label="a" type="m">al</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Helpt Heere wt noot ende <rhyme label="a" type="m" corresp="#s13:l1">misual</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Sterckt alle siecke en crancke <rhyme label="b" type="m">zaen</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Dat haer vertrouwen vast mach <rhyme label="b" type="m" corresp="#s13:l3">staen</rhyme>.</l>
        <l id="s13:l5" met="4" type="-+">Maeckt die aen haere siele <rhyme label="c" type="m">ghesont</rhyme>,</l>
        <l id="s13:l6" met="4" type="-+">En troostste in den laetsten <rhyme label="c" type="m" corresp="#s13:l5">stont</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Och lieue Heere verleent <rhyme label="a" type="m">ghedult</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">Die hier veel lijden sonder <rhyme label="a" type="m" corresp="#s14:l1">schult</rhyme>:</l>
        <l id="s14:l3" met="4" type="-+">Treckt die wt haren vyants <rhyme label="b" type="m">cracht</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">Verlost en vrijt die door u <rhyme label="b" type="m" corresp="#s14:l3">macht</rhyme>:</l>
        <l id="s14:l5" met="4" type="-+">Troost hem oock in den laetsten <rhyme label="c" type="m">noot</rhyme>,</l>
        <l id="s14:l6" met="4" type="-+">Die men om u woort brengt ten <rhyme label="c" type="m" corresp="#s14:l5">doot</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Wilt onsen vyant die hier <rhyme label="a" type="m">leeft</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">Sijn sonden vergheuen daer hy in <rhyme label="a" type="m" corresp="#s15:l1">sweeft</rhyme>:</l>
        <l id="s15:l3" met="4" type="-+">Gheeft dat wy hem verheffen <rhyme label="b" type="m">altijt</rhyme>,</l>
        <l id="s15:l4" met="4" type="-+">In vredelijck leuen sonder <rhyme label="b" type="m" corresp="#s15:l3">nijt</rhyme>:</l>
        <l id="s15:l5" met="4" type="-+">Oock allen sondaer so <rhyme label="c" type="m">bekeert</rhyme>,</l>
        <l id="s15:l6" met="4" type="-+">Dat hy u ghenade begheert en <rhyme label="c" type="m" corresp="#s15:l5">leert</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Bewaert die vruchten op dat <rhyme label="a" type="m">velt</rhyme>,</l>
        <l id="s16:l2" met="4" type="-+">Die ghy ghenadichlijck daer <rhyme label="a" type="m" corresp="#s16:l1">stelt</rhyme>:</l>
        <l id="s16:l3" met="4" type="-+">Voor Haghel, wint, en schade <rhyme label="b" type="m">fel</rhyme>,</l>
        <l id="s16:l4" met="4" type="-+">En dat wy die ghebruycken <rhyme label="b" type="m" corresp="#s16:l3">wel</rhyme>:</l>
        <l id="s16:l5" met="4" type="-+">Recht matelijck in ons <rhyme label="c" type="m">bedrijf</rhyme>,</l>
        <l id="s16:l6" met="4" type="-+">Sonder verderuen siel en <rhyme label="c" type="m" corresp="#s16:l5">lijf</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">O Jhesu Christe Godes <rhyme label="a" type="m">Soon</rhyme>,</l>
        <l id="s17:l2" met="4" type="-+">O Jhesu Christe der ghenaden <rhyme label="a" type="m" corresp="#s17:l1">throon</rhyme>:</l>
        <l id="s17:l3" met="4" type="-+">O Jhesu Christe Godes <rhyme label="b" type="m">Lam</rhyme>,</l>
        <l id="s17:l4" met="4" type="-+">Dat tswerelts sonden droech en <rhyme label="b" type="m" corresp="#s17:l3">nam</rhyme>:</l>
        <l id="s17:l5" met="4" type="-+">Ghy heylich Zaet <rhyme label="c" type="m">ghebenedijt</rhyme>,</l>
        <l id="s17:l6" met="4" type="-+">Erbermet u ouer ons <rhyme label="c" type="m" corresp="#s17:l5">altijt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

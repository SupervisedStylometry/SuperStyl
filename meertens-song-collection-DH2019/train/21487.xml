    <melody>Mij dacht dat ik in rode roosjes lag</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">KInderkens in Christo <rhyme label="a" type="m">fijn</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Ter werelt hier <rhyme label="b" type="f">versteken</rhyme></l>
        <l id="s1:l3" met="4" type="-+">En wilt doch niet verwondert <rhyme label="a" type="m" corresp="#s1:l1">zijn</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Door tvier des lijdens <rhyme label="b" type="f" corresp="#s1:l2">treken</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Want daer staet claer <rhyme label="c" type="f">beschreuen</rhyme></l>
        <l id="s1:l6" met="3" type="-+">De zijne wilt hy <rhyme label="d" type="f">castijden</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Die Christo zijn <rhyme label="c" type="f" corresp="#s1:l5">ghegheuen</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Moeten ter weerelt <rhyme label="d" type="f" corresp="#s1:l6">lijden</rhyme></l>
        <l id="s1:l9" met="3" type="-+">Maer wilt v dies <rhyme label="d" type="f" corresp="#s1:l6">verblijden</rhyme></l>
        <l id="s1:l10" met="3" type="-+">In alder stonden <rhyme label="e" type="m">wijt</rhyme></l>
        <l id="s1:l11" met="5" type="+-">Dat ghy zijns lijdens weerdich beuonden <rhyme label="e" type="m" corresp="#s1:l10">zijt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Sijdy van elck behaet, <rhyme label="a" type="m">versmaet</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Alleene om Christus <rhyme label="b" type="f">name</rhyme></l>
        <l id="s2:l3" met="4" type="-+">So sidy salich (my <rhyme label="a" type="m" corresp="#s2:l1">verstaet</rhyme>)</l>
        <l id="s2:l4" met="3" type="-+">Beurijt voor sviants <rhyme label="b" type="f" corresp="#s2:l2">blame</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Want al Gods <rhyme label="c" type="f">wtuercoren</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Heeftmen oyt sien <rhyme label="d" type="f">verdouwen</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Ia Christus selue <rhyme label="c" type="f" corresp="#s2:l5">aluoren</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Heeftmen oock sien <rhyme label="d" type="f" corresp="#s2:l6">benouwen</rhyme></l>
        <l id="s2:l9" met="3" type="-+">Dies ghy mans en <rhyme label="d" type="f" corresp="#s2:l6">vrouwen</rhyme></l>
        <l id="s2:l10" met="3" type="-+">Uerblijt v in desen <rhyme label="e" type="m">tijt</rhyme></l>
        <l id="s2:l11" met="5" type="+-">Dat ghy zijns lijdens weerdich beuonden <rhyme label="e" type="m" corresp="#s2:l10">zijt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Kinders weest cloeck en wel <rhyme label="a" type="m">ghemoet</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Schept int cruyce een <rhyme label="b" type="f">verhueghen</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Want desen tijt ter weerelt <rhyme label="a" type="m" corresp="#s3:l1">vroet</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Heeft hier een cleyn <rhyme label="b" type="f" corresp="#s3:l2">vermueghen</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Al wilt v de Heere <rhyme label="c" type="f">proeuen</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Ghelijck tgout inden <rhyme label="d" type="f">viere</rhyme></l>
        <l id="s3:l7" met="3" type="-+">En wilt v niet <rhyme label="c" type="f" corresp="#s3:l5">bedroeuen</rhyme></l>
        <l id="s3:l8" met="3" type="-+">In alsulcken <rhyme label="d" type="f" corresp="#s3:l6">dangiere</rhyme></l>
        <l id="s3:l9" met="3" type="-+">Met herte <rhyme label="d" type="f" corresp="#s3:l6">goedertiere</rhyme></l>
        <l id="s3:l10" met="3" type="-+">Danct Christus <rhyme label="e" type="m">ghebenedijt</rhyme></l>
        <l id="s3:l11" met="5" type="+-">Dat ghy zijns lijdens weerdich beuonden <rhyme label="e" type="m" corresp="#s3:l10">zijt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Al werdy veroordeelt ter <rhyme label="a" type="m">doot</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Peyst tis v so <rhyme label="b" type="f">voorsproken</rhyme></l>
        <l id="s4:l3" met="4" type="-+">En schaemt v niet in sulcken <rhyme label="a" type="m" corresp="#s4:l1">noot</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Al wort het lijf <rhyme label="b" type="f" corresp="#s4:l2">ghebroken</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Gaet voort, staet vast int <rhyme label="c" type="f">goede</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Helpt Christus name <rhyme label="d" type="f">prijsen</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Uerseghelt metten <rhyme label="c" type="f" corresp="#s4:l5">bloede</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Gods woort, vreest gheen <rhyme label="d" type="f" corresp="#s4:l6">afgrijsen</rhyme></l>
        <l id="s4:l9" met="3" type="-+">Strijt cloeck sonder <rhyme label="d" type="f" corresp="#s4:l6">herdijsen</rhyme></l>
        <l id="s4:l10" met="3" type="-+">Gods goetheyt claer <rhyme label="e" type="m">belijt</rhyme></l>
        <l id="s4:l11" met="5" type="+-">Dat ghy zijns lijdens weerdich beuonden <rhyme label="e" type="m" corresp="#s4:l10">zijt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Peyst mijn alderliefste <rhyme label="a" type="m">certeyn</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Dat ghy door Gods <rhyme label="b" type="f">ghenade</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Onder so menich duysent <rhyme label="a" type="m" corresp="#s5:l1">reyn</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Ghecoren zijt wt <rhyme label="b" type="f" corresp="#s5:l2">tquade</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Tot een eewich <rhyme label="c" type="f">regneren</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Met God in shemels <rhyme label="d" type="f">throone</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Dits groot <rhyme label="c" type="f" corresp="#s5:l5">verconsoleren</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Uoor die in swerelts <rhyme label="d" type="f" corresp="#s5:l6">woone</rhyme></l>
        <l id="s5:l9" met="3" type="-+">Crijghen de doot ten <rhyme label="d" type="f" corresp="#s5:l6">loone</rhyme></l>
        <l id="s5:l10" met="3" type="-+">Hier in slichaems <rhyme label="e" type="m">berijt</rhyme></l>
        <l id="s5:l11" met="5" type="+-">Dat ghy zijns lijdens weerdich beuonden <rhyme label="e" type="m" corresp="#s5:l10">zijt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Kinders tis grooten troost <rhyme label="a" type="m">voorwaer</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Sijns lijdens deelachtich <rhyme label="b" type="f">tzijne</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Want daer door tuycht den gheest <rhyme label="a" type="m" corresp="#s6:l1">eenpaer</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Dat hy tallen <rhyme label="b" type="f" corresp="#s6:l2">termijne</rhyme></l>
        <l id="s6:l5" met="3" type="-+">U roept tot shemels <rhyme label="c" type="f">eruen</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Door sulck trouwich <rhyme label="d" type="f">verclaren</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Tot een vruechdich <rhyme label="c" type="f" corresp="#s6:l5">verweruen</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Door dit druckich <rhyme label="d" type="f" corresp="#s6:l6">beswaren</rhyme></l>
        <l id="s6:l9" met="3" type="-+">Als al Christus <rhyme label="d" type="f" corresp="#s6:l6">dienaren</rhyme></l>
        <l id="s6:l10" met="3" type="-+">Uerhuecht inden gheest <rhyme label="e" type="m">subijt</rhyme></l>
        <l id="s6:l11" met="5" type="+-">Dat ghy zijns lijdens weerdich beuonden <rhyme label="e" type="m" corresp="#s6:l10">zijt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Op dat ghy inden tijt <rhyme label="a" type="m">bekent</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Sijnder toecomste <rhyme label="b" type="f">reene</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Uerhueghen muecht met blijschap <rhyme label="a" type="m" corresp="#s7:l1">gent</rhyme></l>
        <l id="s7:l4" met="3" type="-+">In Christo alle <rhyme label="b" type="f" corresp="#s7:l2">ghemeene</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Rust op zijn woort <rhyme label="c" type="f">ghepresen</rhyme></l>
        <l id="s7:l6" met="3" type="-+">En acht grief noch <rhyme label="d" type="f">dolueren</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Maer weest verblijdt in <rhyme label="c" type="f" corresp="#s7:l5">desen</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Alsmen v doet al <rhyme label="d" type="f" corresp="#s7:l6">vueren</rhyme></l>
        <l id="s7:l9" met="3" type="-+">Om Christus name <rhyme label="d" type="f" corresp="#s7:l6">trueren</rhyme></l>
        <l id="s7:l10" met="3" type="-+">In als weest dan <rhyme label="e" type="m">verblijt</rhyme></l>
        <l id="s7:l11" met="5" type="+-">Dat ghy zijns lijdens weerdich beuonden <rhyme label="e" type="m" corresp="#s7:l10">zijt</rhyme></l>
      </lg>
    </lg>
  </text>
</song>

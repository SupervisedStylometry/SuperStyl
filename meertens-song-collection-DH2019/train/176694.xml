    <melody>Het regende zeer en ik word nat</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Hendrik Rintjes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Lieve Menschen over <rhyme label="a" type="m">al</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Ter werelt hier in ‘t <rhyme label="a" type="m" corresp="#s1:l1">Aertsche-dal</rhyme></l>
        <l id="s1:l3" met="2" type="-+">U dies niet <rhyme label="b" type="m">roemt</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Alle Christenen te <rhyme label="c" type="f">wesen</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Om dat ghy Christen zijt <rhyme label="b" type="m" corresp="#s1:l3">ghenoemt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Betert ghy niet u leven <rhyme label="a" type="m">boos</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Den naeme helpt u niet <rhyme label="a" type="m" corresp="#s2:l1">altoos</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Ghy moet <rhyme label="b" type="m">vergaen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Also Christus heeft <rhyme label="c" type="f">ghesproken</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">Om boete te doen weest niet <rhyme label="b" type="m" corresp="#s2:l3">beraen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Den naem en sal u ghelden <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Ten zy dat ghy nae Schrifts <rhyme label="a" type="m" corresp="#s3:l1">bediet</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Uyt Godes <rhyme label="b" type="m">woort</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Van nieus zijt weder <rhyme label="c" type="f">gheboren</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">En gaet nae sijnen wille <rhyme label="b" type="m" corresp="#s3:l3">voort</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Zijt ghy niet als Christus <rhyme label="a" type="m">ghesint</rhyme>?</l>
        <l id="s4:l2" met="4" type="-+">Den naem is als een hant vol <rhyme label="a" type="m" corresp="#s4:l1">wint</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">Een ydel <rhyme label="b" type="m">waen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Als hoop op een <rhyme label="c" type="f">Distel-Bloeme</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Die van den wint wech stuyvet <rhyme label="b" type="m" corresp="#s4:l3">saen</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Wat mach helpen den bloten <rhyme label="a" type="m">naem</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Zijt ghy gheen Lidt aen sijn <rhyme label="a" type="m" corresp="#s5:l1">lichaem</rhyme>!</l>
        <l id="s5:l3" met="2" type="-+">Gheaert alst <rhyme label="b" type="m">hooft</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Ten mach u lien al niet <rhyme label="c" type="f">baten</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Anders sijn eer ghy hem <rhyme label="b" type="m" corresp="#s5:l3">berooft</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Wat hielpet doch den <rhyme label="a" type="m">Pharizeen</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Dat sy haer roemden in ‘t <rhyme label="a" type="m" corresp="#s6:l1">ghemeen</rhyme>?</l>
        <l id="s6:l3" met="2" type="-+">Op ‘t selfde <rhyme label="b" type="m">pas</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Dat Godt was haer lieder <rhyme label="c" type="f">Vader</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Christus seyt het den Duyvel <rhyme label="b" type="m" corresp="#s6:l3">was</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Die u o menschen doet <rhyme label="a" type="m">verstaen</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Dat met den name wel sal <rhyme label="a" type="m" corresp="#s7:l1">gaen</rhyme>,</l>
        <l id="s7:l3" met="2" type="-+">Seggh’ ick <rhyme label="b" type="m">ghewis</rhyme>:</l>
        <l id="s7:l4" met="3" type="-+">Met Christo onsen <rhyme label="c" type="f">Heere</rhyme></l>
        <l id="s7:l5" met="4" type="-+">Dat hy een valsch Prophete <rhyme label="b" type="m" corresp="#s7:l3">is</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Die het volck in haer boosheyt <rhyme label="a" type="m">stijff</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Op houden door al sulck <rhyme label="a" type="m" corresp="#s8:l1">bedrijff</rhyme>,</l>
        <l id="s8:l3" met="2" type="-+">Met leughens <rhyme label="b" type="m">groot</rhyme>:</l>
        <l id="s8:l4" met="3" type="-+">Segghende daer is goede <rhyme label="c" type="f">vrede</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Nochtans veel meer d’eeuwighe <rhyme label="b" type="m" corresp="#s8:l3">doodt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Want so ter werelt wijt en <rhyme label="a" type="m">breet</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">De menschen niet en draghen <rhyme label="a" type="m" corresp="#s9:l1">leet</rhyme>,</l>
        <l id="s9:l3" met="2" type="-+">Goedt en <rhyme label="b" type="m">oprecht</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Van haer lieder voor leden <rhyme label="c" type="f">zonden</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">‘t Is al verlooren vree <rhyme label="b" type="m" corresp="#s9:l3">gheseght</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Een Christen moet ghestorven <rhyme label="a" type="m">zijn</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Dees werelt ergher dan <rhyme label="a" type="m" corresp="#s10:l1">fenijn</rhyme></l>
        <l id="s10:l3" met="2" type="-+">En leven <rhyme label="b" type="m">Godt</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Almachtigh, nae Pauli <rhyme label="c" type="f">leere</rhyme></l>
        <l id="s10:l5" met="4" type="-+">Al wort hy al des werelts <rhyme label="b" type="m" corresp="#s10:l3">spot</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Een Christen moet, o menschen <rhyme label="a" type="m">blent</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Dees werelts zijn so <rhyme label="a" type="m" corresp="#s11:l1">different</rhyme></l>
        <l id="s11:l3" met="2" type="-+">Als dach en <rhyme label="b" type="m">nacht</rhyme>.</l>
        <l id="s11:l4" met="3" type="-+">Als een licht in deser <rhyme label="c" type="f">werelt</rhyme></l>
        <l id="s11:l5" met="4" type="-+">Lichten in dit verkeert <rhyme label="b" type="m" corresp="#s11:l3">gheslacht</rhyme></l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Een Christen van ghemoede <rhyme label="a" type="m">nieu</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Seght dese boose werlt <rhyme label="a" type="m" corresp="#s12:l1">adieu</rhyme></l>
        <l id="s12:l3" met="2" type="-+">Ende hem <rhyme label="b" type="m">scheyt</rhyme>:</l>
        <l id="s12:l4" met="3" type="-+">Van alle haer boose <rhyme label="c" type="f">weghen</rhyme></l>
        <l id="s12:l5" met="4" type="-+">Als van een vuyl <rhyme label="b" type="m" corresp="#s12:l3">onreynigheyt</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Een Christen niet liever en <rhyme label="a" type="m">heeft</rhyme></l>
        <l id="s13:l2" met="4" type="-+">Op dees werelt van al dat <rhyme label="a" type="m" corresp="#s13:l1">leeft</rhyme>,</l>
        <l id="s13:l3" met="2" type="-+">Met herten <rhyme label="b" type="m">reyn</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">‘t Zy ghelt, goet, seer hoogh <rhyme label="c" type="f">verheven</rhyme></l>
        <l id="s13:l5" met="4" type="-+">Dan Christum sijnen Heere <rhyme label="b" type="m" corresp="#s13:l3">alleyn</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Een Christen, dits een woort als <rhyme label="a" type="m">duyst</rhyme></l>
        <l id="s14:l2" met="4" type="-+">Die moet sijn vleesch hebben <rhyme label="a" type="m" corresp="#s14:l1">ghekruyst</rhyme></l>
        <l id="s14:l3" met="2" type="-+">Met sijnen <rhyme label="b" type="m">lust</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">Ende oock met sijn <rhyme label="c" type="f">begheerten</rhyme></l>
        <l id="s14:l5" met="4" type="-+">Dat is, dat hy van boosheyt <rhyme label="b" type="m" corresp="#s14:l3">rust</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

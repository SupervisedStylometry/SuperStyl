<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>21393</id>
    <date>
      <year-start>1591</year-start>
      <year-end>1592</year-end>
    </date>
    <tags>
      <tag standard-name="schriftuurlijk lied" translation="scripture song">schriftuurlijk lied</tag>
      <tag standard-name="vermaanlied" translation="admonitory song">vermaanlied</tag>
    </tags>
    <melody>Een meisje had een ruiter lief</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Soetken Gerijts</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">OCh broeders ende susters <rhyme label="a" type="m">hoort</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Al die ghebaert zijn door Gods <rhyme label="a" type="m" corresp="#s1:l1">woort</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Tot wasdom zijt <rhyme label="b" type="f">ghecomen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Daer moet noch voetsel zijn <rhyme label="b" type="f" corresp="#s1:l3">genomen</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Verlaet toch v vergaring <rhyme label="a" type="m">niet</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Al comt het vleesch daer af <rhyme label="a" type="m" corresp="#s2:l1">verdriet</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Hy en mach naet vleesch niet <rhyme label="b" type="f">leuen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Die geen broot en wort <rhyme label="b" type="f" corresp="#s2:l3">gegeuen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Die mensch en mach na Christus <rhyme label="a" type="m">reen</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Niet leuen by den broot <rhyme label="a" type="m" corresp="#s3:l1">alleen</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Maer by alle woorden <rhyme label="b" type="f">vercooren</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Wt den monde Gods so wy <rhyme label="b" type="f" corresp="#s3:l3">hooren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Daerom laet ons begeerich <rhyme label="a" type="m">zijn</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Na ongeualschte melck <rhyme label="a" type="m" corresp="#s4:l1">fijn</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Als kinderen nieu <rhyme label="b" type="f">ghebooren</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Nae hemelsche spijse <rhyme label="b" type="f" corresp="#s4:l3">spooren</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Sijt ghy met Christo <rhyme label="a" type="m">opgestaen</rhyme></l>
        <l id="s5:l2" met="4" type="-+">So soeckt nae Paulus <rhyme label="a" type="m" corresp="#s5:l1">vermaen</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Dat gheen dat daer is <rhyme label="b" type="f">bouen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Twelck wy so seer <rhyme label="b" type="f" corresp="#s5:l3">behoeuen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Want alle vleesch is hoy of <rhyme label="a" type="m">gras</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Gheneghen tot die sonden <rhyme label="a" type="m" corresp="#s6:l1">ras</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Christus heeft hem <rhyme label="b" type="f">gheheuen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Voor ons, hem moeten wy <rhyme label="b" type="f" corresp="#s6:l3">leuen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Die Arcke Gods was louter <rhyme label="a" type="m">gout</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Beslaghen ouer vueren <rhyme label="a" type="m" corresp="#s7:l1">hout</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Dit was een <rhyme label="b" type="f">figueracy</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Claer op die Christen <rhyme label="b" type="f" corresp="#s7:l3">nacy</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Een yeghelijck siet, dat hy so <rhyme label="a" type="m">leeft</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Want Godt dit af ghebeeldet <rhyme label="a" type="m" corresp="#s8:l1">heeft</rhyme></l>
        <l id="s8:l3" met="3" type="-+">So is hy met ons te <rhyme label="b" type="f">vreden</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Maer wilt onder tgout niet <rhyme label="b" type="f" corresp="#s8:l3">smeden</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Waer dat gout of siluer <rhyme label="a" type="m">vals</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Dat viel swaer op des Goutsmits <rhyme label="a" type="m" corresp="#s9:l1">hals</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Wy moghen hier op <rhyme label="b" type="f">achten</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Ons voor gheueynstheyt <rhyme label="b" type="f" corresp="#s9:l3">wachten</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Die onse cranckheyt nam op <rhyme label="a" type="m">hem</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Die heeft ghesproken hoort mijn <rhyme label="a" type="m" corresp="#s10:l1">stem</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Vreest niet die tlichaem <rhyme label="b" type="f">dooden</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Strijt vroom en vreest niet <rhyme label="b" type="f" corresp="#s10:l3">blooden</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Ick voel mijn swackheydt eensdeels <rhyme label="a" type="m">wel</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Daer teghen moet ick strijden <rhyme label="a" type="m" corresp="#s11:l1">snel</rhyme></l>
        <l id="s11:l3" met="3" type="-+">Op Gods woort wil ick <rhyme label="b" type="f">mercken</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Die spijse moet my <rhyme label="b" type="f" corresp="#s11:l3">verstercken</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Want in mijn vleesch niet goets in <rhyme label="a" type="m">woont</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Wort mijn dan anders niet <rhyme label="a" type="m" corresp="#s12:l1">ghetoont</rhyme></l>
        <l id="s12:l3" met="3" type="-+">Wat vruchten sullender <rhyme label="b" type="f">spruyten</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Die boosheyt wil wt <rhyme label="b" type="f" corresp="#s12:l3">muyten</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Vrede si den menschen <rhyme label="a" type="m">al</rhyme></l>
        <l id="s13:l2" met="4" type="-+">Die daer zijn in dit aertsche <rhyme label="a" type="m" corresp="#s13:l1">dal</rhyme></l>
        <l id="s13:l3" met="3" type="-+">Van goeden willen o <rhyme label="b" type="f">vader</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Ghy kent ons <rhyme label="b" type="f" corresp="#s13:l3">allegader</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Ende ghy hebt <rhyme label="a" type="m">gheordonneert</rhyme></l>
        <l id="s14:l2" met="4" type="-+">Herders, en Leeraers, <rhyme label="a" type="m" corresp="#s14:l1">ghefondeert</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Om alle onse <rhyme label="b" type="f">ghemoeden</rhyme></l>
        <l id="s14:l4" met="3" type="-+">In eenicheyt te <rhyme label="b" type="f" corresp="#s14:l3">voeden</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">O Vader ghy kent ons <rhyme label="a" type="m">alsoo</rhyme></l>
        <l id="s15:l2" met="4" type="-+">Verduldicheyt is ons van <rhyme label="a" type="m" corresp="#s15:l1">noo</rhyme>,</l>
        <l id="s15:l3" met="3" type="-+">Om uwen wille te <rhyme label="b" type="f">pleghen</rhyme></l>
        <l id="s15:l4" met="3" type="-+">Den Gheest compt hier veel <rhyme label="b" type="f" corresp="#s15:l3">teghen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

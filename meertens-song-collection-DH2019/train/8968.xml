  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">GHy die zijt dry in <rhyme label="a" type="m">Eenicheyt</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Waerachtich Godt van <rhyme label="a" type="m" corresp="#s1:l1">Eewicheyt</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Des Dages Licht nu <rhyme label="b" type="m">Ondergaet</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Dijn Godlijck Licht ons com te <rhyme label="b" type="m" corresp="#s1:l3">baet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Des Morgens Godt dy Loven <rhyme label="a" type="m">wy</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Des Avonts oock Aenbidden <rhyme label="a" type="m" corresp="#s2:l1">dy</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Dy ons Ghesang moet prijsen <rhyme label="b" type="m">vry</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Nu hier end in Eewicheyt <rhyme label="b" type="m" corresp="#s2:l3">bly</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Godt Vader dien sy Eewich <rhyme label="a" type="m">Eer</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Godt Soon die is ons Eenig' <rhyme label="a" type="m" corresp="#s3:l1">HEEr</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Godt den Trooster heylighe <rhyme label="b" type="m">Geest</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Beyd' nu end in Eewicheyt <rhyme label="b" type="m" corresp="#s3:l3">meest</rhyme>.</l>
      </lg>
    </lg>

      <category translation="religion">godsdienst</category>
    </categories>
  <author>C. J. Wits</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">WIlt u <rhyme label="a" type="f">op-maken</rhyme></l>
        <l id="s1:l2" met="2" type="-+">'t Is tijdt te <rhyme label="a" type="f" corresp="#s1:l1">waken</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">Want u <rhyme label="b" type="f">Vyanden</rhyme></l>
        <l id="s1:l4" met="3" type="+-">V gestaegh <rhyme label="b" type="f" corresp="#s1:l3">aenranden</rhyme>.</l>
        <l id="s1:l5" met="3" type="+-">Wel op jonge <rhyme label="c" type="m">Jeucht</rhyme>,</l>
        <l id="s1:l6" met="1" type="-+">Wilt <rhyme label="d" type="f">strijden</rhyme>,</l>
        <l id="s1:l7" met="1" type="+-">
          <rhyme label="d" type="f" corresp="#s1:l6">Lijden</rhyme>
        </l>
        <l id="s1:l8" met="3" type="+-">Om de hooghste <rhyme label="c" type="m" corresp="#s1:l5">vreucht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Is 't hert <rhyme label="a" type="f">geneghen</rhyme>,</l>
        <l id="s2:l2" met="2" type="-+">Vreuchde te <rhyme label="a" type="f" corresp="#s2:l1">pleghen</rhyme> ?</l>
        <l id="s2:l3" met="2" type="-+">Wilt sond' <rhyme label="b" type="f">uytrooden</rhyme></l>
        <l id="s2:l4" met="3" type="+-">Die u vreuchde <rhyme label="b" type="f" corresp="#s2:l3">dooden</rhyme>,</l>
        <l id="s2:l5" met="3" type="+-">Ende u oock <rhyme label="c" type="m">mee</rhyme>.</l>
        <l id="s2:l6" met="1" type="-+"><rhyme label="d" type="f">Behendigh</rhyme>,</l>
        <l id="s2:l7" met="1" type="+-"><rhyme label="d" type="f" corresp="#s2:l6">Ellendigh</rhyme>,</l>
        <l id="s2:l8" met="3" type="+-">Brenghen 't eeuwigh <rhyme label="c" type="m" corresp="#s2:l5">wee</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Leert <rhyme label="a" type="f">overwinnen</rhyme>,</l>
        <l id="s3:l2" met="2" type="-+">Vlees'lijcke <rhyme label="a" type="f" corresp="#s3:l1">sinnen</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Die u vast <rhyme label="b" type="f">quellen</rhyme></l>
        <l id="s3:l4" met="3" type="+-">En seer droef <rhyme label="b" type="f" corresp="#s3:l3">ontstellen</rhyme>,</l>
        <l id="s3:l5" met="3" type="+-">'t Sal haest beter <rhyme label="c" type="m">zijn</rhyme>.</l>
        <l id="s3:l6" met="1" type="-+">Na <rhyme label="d" type="f">lijden</rhyme>,</l>
        <l id="s3:l7" met="1" type="+-"><rhyme label="d" type="f" corresp="#s3:l6">Verblijden</rhyme>,</l>
        <l id="s3:l8" met="3" type="+-">Eeuw'ge vreucht voor <rhyme label="c" type="m" corresp="#s3:l5">pijn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Leert <rhyme label="a" type="f">overweghen</rhyme>,</l>
        <l id="s4:l2" met="2" type="-+">Daer 's <rhyme label="a" type="f" corresp="#s4:l1">aengeleghen</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">Hoe groote <rhyme label="b" type="f">hoopen</rhyme></l>
        <l id="s4:l4" met="3" type="+-">Nu al ruym-schoots <rhyme label="b" type="f" corresp="#s4:l3">loopen</rhyme></l>
        <l id="s4:l5" met="3" type="+-">Na de Helsche <rhyme label="c" type="m">pijn</rhyme>,</l>
        <l id="s4:l6" met="1" type="-+">Och mijdt <rhyme label="d" type="f">die</rhyme>,</l>
        <l id="s4:l7" met="1" type="+-">Vliedt <rhyme label="d" type="f" corresp="#s4:l6">die</rhyme>,</l>
        <l id="s4:l8" met="3" type="+-">Ey ! wilt wijser <rhyme label="c" type="m" corresp="#s4:l5">zyn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">In Godes <rhyme label="a" type="f">weghen</rhyme></l>
        <l id="s5:l2" met="2" type="-+">Is heyl en <rhyme label="a" type="f" corresp="#s5:l1">zeghen</rhyme>,</l>
        <l id="s5:l3" met="2" type="-+">Nu kloecke <rhyme label="b" type="f">sinnen</rhyme>,</l>
        <l id="s5:l4" met="3" type="+-">Seer graegh om te <rhyme label="b" type="f" corresp="#s5:l3">winnen</rhyme>,</l>
        <l id="s5:l5" met="3" type="+-">Neemt waer winnens <rhyme label="c" type="m">tijdt</rhyme>,</l>
        <l id="s5:l6" met="1" type="-+">Want <rhyme label="d" type="f">luchtigh</rhyme>,</l>
        <l id="s5:l7" met="1" type="+-"><rhyme label="d" type="f" corresp="#s5:l6">Vluchtigh</rhyme>,</l>
        <l id="s5:l8" met="3" type="+-">Sy u haest <rhyme label="c" type="m" corresp="#s5:l5">ontglijdt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Met langhe <rhyme label="a" type="f">wachten</rhyme></l>
        <l id="s6:l2" met="2" type="-+">Na God te <rhyme label="a" type="f" corresp="#s6:l1">trachten</rhyme>,</l>
        <l id="s6:l3" met="2" type="-+">Komt quaden <rhyme label="b" type="f">wennis</rhyme>,</l>
        <l id="s6:l4" met="3" type="+-">En oock me'e gheen <rhyme label="b" type="f" corresp="#s6:l3">kennis</rhyme></l>
        <l id="s6:l5" met="3" type="+-">Van u droeven <rhyme label="c" type="m">staet</rhyme>:</l>
        <l id="s6:l6" met="1" type="-+"><rhyme label="d" type="f">Ellendigh</rhyme>,</l>
        <l id="s6:l7" met="1" type="+-">
          <rhyme label="d" type="f" corresp="#s6:l6">Schendigh</rhyme>
        </l>
        <l id="s6:l8" met="3" type="+-">Ghy noch verder <rhyme label="c" type="m" corresp="#s6:l5">gaet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="2" type="-+">Eer 't quaet komt <rhyme label="a" type="f">groeyen</rhyme>,</l>
        <l id="s7:l2" met="2" type="-+">Soect 't uyt te <rhyme label="a" type="f" corresp="#s7:l1">roeyen</rhyme></l>
        <l id="s7:l3" met="2" type="-+">Door den <rhyme label="b" type="f">Gebeden</rhyme>,</l>
        <l id="s7:l4" met="3" type="+-">Gaet geheel <rhyme label="b" type="f" corresp="#s7:l3">vertreden</rhyme>,</l>
        <l id="s7:l5" met="3" type="+-">Na Gods wil en <rhyme label="c" type="m">raedt</rhyme></l>
        <l id="s7:l6" met="1" type="-+">'t <rhyme label="d" type="f">Soet-schijnigh</rhyme></l>
        <l id="s7:l7" met="1" type="+-">
          <rhyme label="d" type="f" corresp="#s7:l6">quijnigh</rhyme>
        </l>
        <l id="s7:l8" met="3" type="+-">Van al 's Duyvels <rhyme label="c" type="m" corresp="#s7:l5">zaet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="2" type="-+">Valt dit u <rhyme label="a" type="f">swaer'lijck</rhyme>,</l>
        <l id="s8:l2" met="2" type="-+">Schijnt u <rhyme label="a" type="f" corresp="#s8:l1">gevaer'lijck</rhyme> ?</l>
        <l id="s8:l3" met="2" type="-+">Weest niet <rhyme label="b" type="f">verleghen</rhyme>,</l>
        <l id="s8:l4" met="3" type="+-">Want door Gods <rhyme label="b" type="f" corresp="#s8:l3">Zeghen</rhyme></l>
        <l id="s8:l5" met="3" type="+-">Ghy het quaet <rhyme label="c" type="m">verwint</rhyme>,</l>
        <l id="s8:l6" met="1" type="-+">Weest <rhyme label="d" type="f">lustigh</rhyme>,</l>
        <l id="s8:l7" met="1" type="+-"><rhyme label="d" type="f" corresp="#s8:l6">Rustigh</rhyme>,</l>
        <l id="s8:l8" met="3" type="+-">Want die soeckt die <rhyme label="c" type="m" corresp="#s8:l5">vindt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="2" type="-+">Ey ! siet de <rhyme label="a" type="f">Werelt</rhyme>,</l>
        <l id="s9:l2" met="2" type="-+">Hoe sy <rhyme label="a" type="f" corresp="#s9:l1">beperelt</rhyme></l>
        <l id="s9:l3" met="2" type="-+">V komt te <rhyme label="b" type="f">prachgen</rhyme>,</l>
        <l id="s9:l4" met="3" type="+-">Gunstelijck <rhyme label="b" type="f" corresp="#s9:l3">toe-lachgen</rhyme></l>
        <l id="s9:l5" met="3" type="+-">Met seer schoonen <rhyme label="c" type="m">schijn</rhyme>:</l>
        <l id="s9:l6" met="1" type="-+">Fraey <rhyme label="d" type="f">toonen</rhyme>,</l>
        <l id="s9:l7" met="1" type="+-">
          <rhyme label="d" type="f" corresp="#s9:l6">Loonen</rhyme>
        </l>
        <l id="s9:l8" met="3" type="+-">Met de Helsche <rhyme label="c" type="m" corresp="#s9:l5">pijn</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="2" type="-+">Recht wilt <rhyme label="a" type="f">aenmercken</rhyme></l>
        <l id="s10:l2" met="2" type="-+">Des vleesschen <rhyme label="a" type="f" corresp="#s10:l1">wercken</rhyme></l>
        <l id="s10:l3" met="2" type="-+">Die u <rhyme label="b" type="f">verleyden</rhyme>,</l>
        <l id="s10:l4" met="3" type="+-">En geheel <rhyme label="b" type="f" corresp="#s10:l3">af-scheyden</rhyme>,</l>
        <l id="s10:l5" met="3" type="+-">Van het grootst' <rhyme label="c" type="m">geluck</rhyme>,</l>
        <l id="s10:l6" met="1" type="-+"><rhyme label="d" type="f">Schijn-gunstigh</rhyme>,</l>
        <l id="s10:l7" met="1" type="+-">
          <rhyme label="d" type="f" corresp="#s10:l6">Kunstigh</rhyme>
        </l>
        <l id="s10:l8" met="3" type="+-">Brenghen in den <rhyme label="c" type="m" corresp="#s10:l5">druck</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="2" type="-+">Toont u oock <rhyme label="a" type="f">moedigh</rhyme>,</l>
        <l id="s11:l2" met="2" type="-+">Als Satan <rhyme label="a" type="f" corresp="#s11:l1">woedigh</rhyme>,</l>
        <l id="s11:l3" met="2" type="-+">V komt <rhyme label="b" type="f">bespringhen</rhyme>,</l>
        <l id="s11:l4" met="3" type="+-">Of tot sonde <rhyme label="b" type="f" corresp="#s11:l3">dringhen</rhyme></l>
        <l id="s11:l5" met="3" type="+-">In een Engels <rhyme label="c" type="m">schijn</rhyme>,</l>
        <l id="s11:l6" met="1" type="-+">
          <rhyme label="d" type="f">Schijn-heyligh</rhyme>
        </l>
        <l id="s11:l7" met="1" type="+-">
          <rhyme label="d" type="f" corresp="#s11:l6">Veyligh</rhyme>
        </l>
        <l id="s11:l8" met="3" type="+-">Saeyen Helsch <rhyme label="c" type="m" corresp="#s11:l5">fenijn</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="2" type="-+">SOeckt na 't <rhyme label="a" type="f">beste</rhyme>,</l>
        <l id="s12:l2" met="2" type="-+">Acht voor de <rhyme label="a" type="f" corresp="#s12:l1">Peste</rhyme></l>
        <l id="s12:l3" met="2" type="-+">ONkuyse <rhyme label="b" type="f">reden</rhyme>,</l>
        <l id="s12:l4" met="3" type="+-">En oock quade <rhyme label="b" type="f" corresp="#s12:l3">zeden</rhyme>,</l>
        <l id="s12:l5" met="3" type="+-">Maer toont u <rhyme label="c" type="m">beleeft</rhyme>:</l>
        <l id="s12:l6" met="1" type="-+">De <rhyme label="d" type="f">Heere</rhyme>,</l>
        <l id="s12:l7" met="1" type="+-">
          <rhyme label="d" type="f" corresp="#s12:l6">Eeren</rhyme>
        </l>
        <l id="s12:l8" met="3" type="+-">Die goe gaven <rhyme label="c" type="m" corresp="#s12:l5">gheeft</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

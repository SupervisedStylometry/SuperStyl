    </location>
    <tags>
      <tag standard-name="loflied" translation="praise song">loflied</tag>
      <tag standard-name="heiligenlied" translation="saint song">heiligenlied</tag>
    </tags>
    <melody>O zoete nacht zeer lang verwacht</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">MIjn tongh beghint nu eens te <rhyme label="a" type="f">singhen</rhyme></l>
        <l id="s1:l2" met="2" type="-+">Met sanghen <rhyme label="b" type="m">soet</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Mijn hert beghint nu op te <rhyme label="a" type="f" corresp="#s1:l1">springhen</rhyme></l>
        <l id="s1:l4" met="2" type="-+">Met bly <rhyme label="b" type="m" corresp="#s1:l2">ghemoet</rhyme>:</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Mijn siel beghint nu eens te <rhyme label="a" type="f">loven</rhyme></l>
        <l id="s2:l2" met="2" type="-+">Een Maghet <rhyme label="b" type="m">reyn</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Die haer met Godt verblijdt hier <rhyme label="a" type="f" corresp="#s2:l1">boven</rhyme></l>
        <l id="s2:l4" met="2" type="-+">In 's hemels <rhyme label="b" type="m" corresp="#s2:l2">pleyn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">S' en was noch nauwelijck <rhyme label="a" type="f">gheboren</rhyme></l>
        <l id="s3:l2" met="2" type="-+">Van hooch <rhyme label="b" type="m">gheslacht</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Of Godt die heeft haer <rhyme label="a" type="f" corresp="#s3:l1">wtvercoren</rhyme></l>
        <l id="s3:l4" met="2" type="-+">En weert <rhyme label="b" type="m" corresp="#s3:l2">gheacht</rhyme>,</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Die hy sijn suyver trouw sou <rhyme label="a" type="f">gheven</rhyme>,</l>
        <l id="s4:l2" met="2" type="-+">En heeft <rhyme label="b" type="m">ghetoont</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Dat sy hier nae met t'eeuwich <rhyme label="a" type="f" corresp="#s4:l1">leven</rhyme></l>
        <l id="s4:l4" met="2" type="-+">Sou zijn <rhyme label="b" type="m" corresp="#s4:l2">ghecroont</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">T' was al van Aldegondis <rhyme label="a" type="f">eere</rhyme></l>
        <l id="s5:l2" met="2" type="-+">Dat yder <rhyme label="b" type="m">sprack</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Soo dat sy menigh' herten <rhyme label="a" type="f" corresp="#s5:l1">teere</rhyme></l>
        <l id="s5:l4" met="2" type="-+">Met liefd' <rhyme label="b" type="m" corresp="#s5:l2">ontstack</rhyme>:</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Doen is tot haer den Prins <rhyme label="a" type="f">ghekomen</rhyme></l>
        <l id="s6:l2" met="2" type="-+">Van <rhyme label="b" type="m">Enghelant</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Om met haer des trouws te <rhyme label="a" type="f" corresp="#s6:l1">bekomen</rhyme></l>
        <l id="s6:l4" met="2" type="-+">Den echten <rhyme label="b" type="m" corresp="#s6:l2">bant</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Maer dat reyn hert en cost niet <rhyme label="a" type="f">minnen</rhyme></l>
        <l id="s7:l2" met="2" type="-+">Dat ydel <rhyme label="b" type="m">was</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Want het door s'hemelsch vyer van <rhyme label="a" type="f" corresp="#s7:l1">binnen</rhyme></l>
        <l id="s7:l4" met="2" type="-+">Ontsteken <rhyme label="b" type="m" corresp="#s7:l2">was</rhyme>;</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Om dat sy gheene macht sou <rhyme label="a" type="f">schroomen</rhyme></l>
        <l id="s8:l2" met="2" type="-+">Oft <rhyme label="b" type="m">onderstaen</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Heeft sy oock door de <rhyme label="a" type="f" corresp="#s8:l1">water-stroomen</rhyme></l>
        <l id="s8:l4" met="2" type="-+">Drooch-voets <rhyme label="b" type="m" corresp="#s8:l2">ghegaen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Doen heeft sy haere trouw <rhyme label="a" type="f">ghegheven</rhyme></l>
        <l id="s9:l2" met="2" type="-+">Aen Godes <rhyme label="b" type="m">Soon</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Om altijdt met hem reyn te <rhyme label="a" type="f" corresp="#s9:l1">leven</rhyme></l>
        <l id="s9:l4" met="2" type="-+">Van deughden <rhyme label="b" type="m" corresp="#s9:l2">schoon</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Doen heeft Godt haer sijn liefde ga en <rhyme label="a" type="f">toogen</rhyme></l>
        <l id="s10:l2" met="2" type="-+">En jonstich <rhyme label="b" type="m">hant</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Doen tot haer als duyf quam <rhyme label="a" type="f" corresp="#s10:l1">ghevloghen</rhyme>,</l>
        <l id="s10:l4" met="2" type="-+">Godts <rhyme label="b" type="m" corresp="#s10:l2">Minne-brant</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Hy heeft dan in haer leste <rhyme label="a" type="f">daghen</rhyme></l>
        <l id="s11:l2" met="2" type="-+">Sijn bruydt <rhyme label="b" type="m">vermaent</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Als haer quam inden boesem <rhyme label="a" type="f" corresp="#s11:l1">knaghen</rhyme></l>
        <l id="s11:l4" met="2" type="-+">Den <rhyme label="b" type="m" corresp="#s11:l2">kancker-brant</rhyme>:</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Maer dat heeft meer haer liefd' <rhyme label="a" type="f">ontsteken</rhyme></l>
        <l id="s12:l2" met="2" type="-+">Tot haren <rhyme label="b" type="m">Godt</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Soo dat sy noyt en heeft <rhyme label="a" type="f" corresp="#s12:l1">gheweken</rhyme></l>
        <l id="s12:l4" met="2" type="-+">Van sijn <rhyme label="b" type="m" corresp="#s12:l2">ghebodt</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Compt hier tot dese Maeght <rhyme label="a" type="f">gheloopen</rhyme></l>
        <l id="s13:l2" met="2" type="-+">Die droeve <rhyme label="b" type="m">zijt</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Compt siecke, compt met groote <rhyme label="a" type="f" corresp="#s13:l1">hoopen</rhyme></l>
        <l id="s13:l4" met="2" type="-+">Tot alle <rhyme label="b" type="m" corresp="#s13:l2">tijdt</rhyme>:</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Geen pijn soo groot, geen corts soo <rhyme label="a" type="f">crachtich</rhyme></l>
        <l id="s14:l2" met="2" type="-+">Oft Cancker <rhyme label="b" type="m">knaeght</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Oft worden al van Godt <rhyme label="a" type="f" corresp="#s14:l1">almachtich</rhyme></l>
        <l id="s14:l4" met="2" type="-+">Door haer <rhyme label="b" type="m" corresp="#s14:l2">verjaeght</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Wilt Aldegond' op ons <rhyme label="a" type="f">ghedencken</rhyme></l>
        <l id="s15:l2" met="2" type="-+">Daer ghy nu <rhyme label="b" type="m">zijt</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">Op dat u Bruygom ons wil <rhyme label="a" type="f" corresp="#s15:l1">schencken</rhyme></l>
        <l id="s15:l4" met="2" type="-+">Tot s'duyvels <rhyme label="b" type="m" corresp="#s15:l2">spijt</rhyme></l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Het leven daer ghy nu hier <rhyme label="a" type="f">boven</rhyme></l>
        <l id="s16:l2" met="2" type="-+">V door <rhyme label="b" type="m">verblijdt</rhyme>:</l>
        <l id="s16:l3" met="4" type="-+">Hierom wy sullen u hier <rhyme label="a" type="f" corresp="#s16:l1">loven</rhyme></l>
        <l id="s16:l4" met="2" type="-+">Tot allen <rhyme label="b" type="m" corresp="#s16:l2">tijdt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

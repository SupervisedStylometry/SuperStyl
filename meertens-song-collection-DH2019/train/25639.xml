  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Ghy jonghe Ieuchde over <rhyme label="a" type="m">al</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Hoort wat ick u vermanen <rhyme label="a" type="m" corresp="#s1:l1">sal</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Met dit gheestelijck Liedt, en <rhyme label="b" type="f">singhen</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Wat ghy doch nu voor alle <rhyme label="b" type="f" corresp="#s1:l3">dinghen</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Hier sult soecken int Aerdtsche <rhyme label="a" type="m" corresp="#s1:l1">dal</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Recht ende slecht sonder <rhyme label="a" type="m">beswijck</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Voor t’aldereerste Godes <rhyme label="a" type="m" corresp="#s2:l1">Rijck</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En sijn gherechticheyt met <rhyme label="b" type="f">desen</rhyme>:</l>
        <l id="s2:l4" met="4" type="-+">Al wat u hier dan noot sal <rhyme label="b" type="f" corresp="#s2:l3">wesen</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Sal u toevallen al <rhyme label="a" type="m" corresp="#s2:l1">ghelijck</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Int beginnen (wilt dit <rhyme label="a" type="m">verstaen</rhyme>)</l>
        <l id="s3:l2" met="4" type="-+">Moet ghy hier uyt de Weerelt <rhyme label="a" type="m" corresp="#s3:l1">gaen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">En tot den Rijcke Gods u <rhyme label="b" type="f">keeren</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">En wat u daer van mochte <rhyme label="b" type="f" corresp="#s3:l3">weeren</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Moet ghy den rugghe keeren <rhyme label="a" type="m" corresp="#s3:l1">saen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">En vergheten t’ghen’ is <rhyme label="a" type="m">voorby</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">V schicken met neersticheyt <rhyme label="a" type="m" corresp="#s4:l1">bly</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Naer t’ghen’ daer ghy geern soudt toe <rhyme label="b" type="f">comen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Int Hemels wesen by de <rhyme label="b" type="f" corresp="#s4:l3">vromen</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Die soo Gods Rijck soeckt, vindt het <rhyme label="a" type="m" corresp="#s4:l1">vry</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ten tweeden dit oock neerstich <rhyme label="a" type="m">leert</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Dat uwen wil nu zy <rhyme label="a" type="m" corresp="#s5:l1">ghekeert</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Tot allen dinghen uyt <rhyme label="b" type="f">vercooren</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Die tot den Rijcke Gods <rhyme label="b" type="f" corresp="#s5:l3">behooren</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Daer voor niet anders en <rhyme label="a" type="m" corresp="#s5:l1">begeert</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Gods wil met uwen wil <rhyme label="a" type="m">ghemeyn</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Niet anders willen groot noch <rhyme label="a" type="m" corresp="#s6:l1">cleyn</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Gheneghen dat men dit mach <rhyme label="b" type="f">mercken</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Dat soo gheschieden al u <rhyme label="b" type="f" corresp="#s6:l3">wercken</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Hier naer den wille Gods <rhyme label="a" type="m" corresp="#s6:l1">alleyn</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">En dat u hert’ zy gantsch <rhyme label="a" type="m">ghehiel</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Ghericht, naer’t Rijck Gods lijf en <rhyme label="a" type="m" corresp="#s7:l1">ziel</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Niet half, ondicht, dat ghy soudt <rhyme label="b" type="f">blincken</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Het aerdtsch en t’Hemels te <rhyme label="b" type="f" corresp="#s7:l3">bedincken</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Liefen t’Rijck Gods voor t’beste <rhyme label="a" type="m" corresp="#s7:l1">deel</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Nu ghy dit weet mijn lieve <rhyme label="a" type="m">kindt</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Soeckt neerstich tot ghy’t oock soo <rhyme label="a" type="m" corresp="#s8:l1">vindt</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Van gantscher en gheheeler <rhyme label="b" type="f">herten</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Nu by tijdts, oft het soud’ u <rhyme label="b" type="f" corresp="#s8:l3">smerten</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Als men die saeck te laet <rhyme label="a" type="m" corresp="#s8:l1">versindt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Int eynd’ vindt men dit Rijc Gods <rhyme label="a" type="m">schoon</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Soo men int soecken trou is <rhyme label="a" type="m" corresp="#s9:l1">coon</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">En soo’t voorseyt is, doet <rhyme label="b" type="f">beginnen</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Noch gheen dinck hier meer doet <rhyme label="b" type="f" corresp="#s9:l3">beminnen</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">T’sal hem worden tot eenen <rhyme label="a" type="m" corresp="#s9:l1">loon</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Al slaet men de handt aen den <rhyme label="a" type="m">ploech</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">En siet te ruggh’, t’is niet <rhyme label="a" type="m" corresp="#s10:l1">ghenoech</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Tot Gods Rijck is men <rhyme label="b" type="f">onbequame</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Beneersticht u in s’Heeren <rhyme label="b" type="f" corresp="#s10:l3">name</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Begint doch vry by tijde <rhyme label="a" type="m" corresp="#s10:l1">vroech</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Nu ghy van’t soecken hebt <rhyme label="a" type="m">ghehoort</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Verstaet wat het zy uyt Gods <rhyme label="a" type="m" corresp="#s11:l1">woort</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">T’is Gods Ghemeynte <rhyme label="b" type="f">uytghelesen</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Inwendich deur ghenae <rhyme label="b" type="f" corresp="#s11:l3">ghepresen</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Naemaels in glory eeuwich <rhyme label="a" type="m" corresp="#s11:l1">voort</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Seer heerlijck wordt het <rhyme label="a" type="m">toeghevoecht</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Die’t hier neerstich hebben <rhyme label="a" type="m" corresp="#s12:l1">ghesoecht</rhyme>:</l>
        <l id="s12:l3" met="4" type="-+">Maer die soecken des weerelts <rhyme label="b" type="f">vreuchde</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Des vleesch wellust en sijn <rhyme label="b" type="f" corresp="#s12:l3">gheneuchde</rhyme>,</l>
        <l id="s12:l5" met="4" type="-+">Worden int verderven <rhyme label="a" type="m" corresp="#s12:l1">gheboecht</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Dochters en Sonen wordt <rhyme label="a" type="m">gheslicht</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">En soeckt dit Rijck, zijnde <rhyme label="a" type="m" corresp="#s13:l1">bericht</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Wat soud’ u anders moghen <rhyme label="b" type="f">baten</rhyme></l>
        <l id="s13:l4" met="4" type="-+">Als ghy t’hemelrijck moest <rhyme label="b" type="f" corresp="#s13:l3">verlaten</rhyme>,</l>
        <l id="s13:l5" met="4" type="-+">En scheyden van Gods <rhyme label="a" type="m" corresp="#s13:l1">aenghesicht</rhyme>?</l>
      </lg>
    </lg>
  </text>
</song>

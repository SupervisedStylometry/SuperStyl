    <melody>Psalm 034 Datheen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Philips van Marnix</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ICk wil Godt t'aller <rhyme label="a" type="m">tijdt</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Hoogh prysen uyt mijns herten <rhyme label="b" type="m">grondt</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">End' eewich voeren inden <rhyme label="b" type="m" corresp="#s1:l2">mont</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Sijn lof <rhyme label="a" type="m" corresp="#s1:l1">ghebenedijdt</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">3. Mijn siel wilt van <rhyme label="c" type="m">gheluck</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Haer roemen op den Heer met <rhyme label="d" type="m">vreugt</rhyme>:</l>
        <l id="s1:l7" met="4" type="-+">Dies sullen werden seer <rhyme label="d" type="m" corresp="#s1:l6">verheugt</rhyme></l>
        <l id="s1:l8" met="3" type="-+">De scham'len inden <rhyme label="c" type="m" corresp="#s1:l5">druck</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">* Comt dan met my te <rhyme label="a" type="m">saem</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Laet ons grootmaken Godt den <rhyme label="b" type="m">Heer</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">End' all' ghelijck met prijs end' <rhyme label="b" type="m" corresp="#s2:l2">eer</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Verhooghen synen <rhyme label="a" type="m" corresp="#s2:l1">naem</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">5. Ick heb' den Heer <rhyme label="c" type="m">ghesocht</rhyme></l>
        <l id="s2:l6" met="4" type="-+">In noot, end' hy heeft my <rhyme label="d" type="m">verhoort</rhyme>:</l>
        <l id="s2:l7" met="4" type="-+">Oock heeft hy my nu rechte <rhyme label="d" type="m" corresp="#s2:l6">voort</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Wt al mijn vrees' <rhyme label="c" type="m" corresp="#s2:l5">ghebrocht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">* Wie zijn oog' op hem <rhyme label="a" type="m">raemt</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Wort door zijn claerheyt gantz <rhyme label="b" type="m">verlicht</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Dies en sal hem het <rhyme label="b" type="m" corresp="#s3:l2">aenghesicht</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Sijn nemmermeer <rhyme label="a" type="m" corresp="#s3:l1">beschaemt</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">7. Den armen die met <rhyme label="c" type="m">vlijt</rhyme></l>
        <l id="s3:l6" met="4" type="-+">In swaeren noot schreydde tot <rhyme label="d" type="m">hem</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Heeft God verhoort zijn clacht' end' <rhyme label="d" type="m" corresp="#s3:l6">stemm'</rhyme></l>
        <l id="s3:l8" met="3" type="-+">End' uyt den ancxt <rhyme label="c" type="m" corresp="#s3:l5">bevrijt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">* Der heyligh' engh'len <rhyme label="a" type="m">schaer</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Heeft haren legher vast <rhyme label="b" type="m">gheslaen</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Rontom die, die God roepen <rhyme label="b" type="m" corresp="#s4:l2">aen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">End' helpts' uyt lasten <rhyme label="a" type="m" corresp="#s4:l1">swaer</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">9. Smaeckt dan, siet end' <rhyme label="c" type="m">aenschouwt</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Hoe milt end' goedich de Heer <rhyme label="d" type="m">is</rhyme>.</l>
        <l id="s4:l7" met="4" type="-+">Wel salich is de man <rhyme label="d" type="m" corresp="#s4:l6">ghewis</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Die vast op hem <rhyme label="c" type="m" corresp="#s4:l5">vertrouwt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">* Vreest God ghy menschen <rhyme label="a" type="m">al</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Die ghy zijt heylich inden <rhyme label="b" type="m">gheest</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Want eenen yegh'lijck die hem <rhyme label="b" type="m" corresp="#s5:l2">vreest</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Gantz niet ghebreken <rhyme label="a" type="m" corresp="#s5:l1">sal</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">11. De leeuwkens stout van <rhyme label="c" type="m">moet</rhyme></l>
        <l id="s5:l6" met="4" type="-+">Lyden dick hongher end' <rhyme label="d" type="m">ghebreck</rhyme>:</l>
        <l id="s5:l7" met="4" type="-+">Maer wie tot Godt neemt zijn <rhyme label="d" type="m" corresp="#s5:l6">vertreck</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Dien ontbreeckt doch gheen <rhyme label="c" type="m" corresp="#s5:l5">goet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">* Comt kinderen hier <rhyme label="a" type="m">al</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Hoort mijn bericht uyt Godes <rhyme label="b" type="m">woort</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Ick sal v leeren rechte <rhyme label="b" type="m" corresp="#s6:l2">voort</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Hoemen Godt vreesen <rhyme label="a" type="m" corresp="#s6:l1">sal</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">13. Wie is de mensch die <rhyme label="c" type="m">lust</rhyme></l>
        <l id="s6:l6" met="4" type="-+">Nae een lanck leuen ende <rhyme label="d" type="m">goet</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">End' soeckt goey daghen met <rhyme label="d" type="m" corresp="#s6:l6">voorspoet</rhyme></l>
        <l id="s6:l8" met="3" type="-+">End' met een hert' <rhyme label="c" type="m" corresp="#s6:l5">gherust</rhyme>?</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">* Snoer dijn tongh' <rhyme label="a" type="m">allemael</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Dat sy gheen achterclap en <rhyme label="b" type="m">doe</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Wacht dyne lippen oock daer <rhyme label="b" type="m" corresp="#s7:l2">toe</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Van valschen <rhyme label="a" type="m" corresp="#s7:l1">loghentael</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">15. Het quaet myd' end' doe <rhyme label="c" type="m">wel</rhyme></l>
        <l id="s7:l6" met="4" type="-+">Soeck vred' end' trachter nae <rhyme label="d" type="m">altijdt</rhyme>:</l>
        <l id="s7:l7" met="4" type="-+">16. Want Gods oogh' wacht op die met <rhyme label="d" type="m" corresp="#s7:l6">vlijt</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Die doen nae zijn <rhyme label="c" type="m" corresp="#s7:l5">bevel</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">* Maer d'aenschijn Gods <rhyme label="a" type="m">aensiet</rhyme></l>
        <l id="s8:l2" met="4" type="-+">All' die boos doen, verstoort end' <rhyme label="b" type="m">gramm'</rhyme>:</l>
        <l id="s8:l3" met="4" type="-+">Op dat hy haren naem end' <rhyme label="b" type="m" corresp="#s8:l2">stamm'</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Brengh' t'eenemael te <rhyme label="a" type="m" corresp="#s8:l1">niet</rhyme>.</l>
        <l id="s8:l5" met="3" type="-+">18. Als de gherechten <rhyme label="c" type="m">zijn</rhyme></l>
        <l id="s8:l6" met="4" type="-+">In last, so schreyen sy tot <rhyme label="d" type="m">hem</rhyme>,</l>
        <l id="s8:l7" met="4" type="-+">End' hy verhoort stracx hare <rhyme label="d" type="m" corresp="#s8:l6">stemm'</rhyme></l>
        <l id="s8:l8" met="3" type="-+">End' helpts' uyt ancxt end' <rhyme label="c" type="m" corresp="#s8:l5">pijn</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">* De Heer is doon na <rhyme label="a" type="m">by</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Dien die verslaghen zijn in't <rhyme label="b" type="m">hert'</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">End' inden gheest verdruckt met <rhyme label="b" type="m" corresp="#s9:l2">smert</rhyme></l>
        <l id="s9:l4" met="3" type="-+">End' maecktse los end' <rhyme label="a" type="m" corresp="#s9:l1">vry</rhyme>.</l>
        <l id="s9:l5" met="3" type="-+">20. Wie vroom end' oprecht <rhyme label="c" type="m">leeft</rhyme></l>
        <l id="s9:l6" met="4" type="-+">Krijgt dickmael menich <rhyme label="d" type="m">ongheluck</rhyme>:</l>
        <l id="s9:l7" met="4" type="-+">Maer God verlost hem uyt den <rhyme label="d" type="m" corresp="#s9:l6">druck</rhyme></l>
        <l id="s9:l8" met="3" type="-+">Als telckens passe <rhyme label="c" type="m" corresp="#s9:l5">gheeft</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">* Hy schutt' een sulcken <rhyme label="a" type="m">man</rhyme></l>
        <l id="s10:l2" met="4" type="-+">All' zijn ghebeenten groot end' <rhyme label="b" type="m">cleen</rhyme>:</l>
        <l id="s10:l3" met="4" type="-+">So naeuw dat haerder oock niet <rhyme label="b" type="m" corresp="#s10:l2">een</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Ghebroken werden <rhyme label="a" type="m" corresp="#s10:l1">kan</rhyme>.</l>
        <l id="s10:l5" met="3" type="-+">22. De goddeloosen <rhyme label="c" type="m">al</rhyme></l>
        <l id="s10:l6" met="4" type="-+">Vergaen door haere boosheyt <rhyme label="d" type="m">quaet</rhyme>,</l>
        <l id="s10:l7" met="4" type="-+">End' wie den vromen draghen <rhyme label="d" type="m" corresp="#s10:l6">haet</rhyme></l>
        <l id="s10:l8" met="3" type="-+">Die cryghen haren <rhyme label="c" type="m" corresp="#s10:l5">val</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

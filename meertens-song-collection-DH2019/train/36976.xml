  <author>Livinus van der Minnen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">LAet ons, ons Ouders <rhyme label="a" type="f">loven</rhyme></l>
        <l id="s1:l2" met="3" type="-+">En prysen hun <rhyme label="b" type="m">Gheslacht'</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Want wy zyn door ons <rhyme label="c" type="f">Ouders</rhyme></l>
        <l id="s1:l4" met="3" type="-+">In 't leven <rhyme label="b" type="m" corresp="#s1:l2">voordts-ghebracht</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">D'eendrachtigheydt des <rhyme label="d" type="f">herten</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Van de ghetrouwde <rhyme label="e" type="m">Lien</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Die doet aen dese <rhyme label="f" type="m">Wereldt</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Een nieuwe Wereldt <rhyme label="e" type="m" corresp="#s1:l6">sien</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">De suyver' min is <rhyme label="g" type="m">Vader</rhyme></l>
        <l id="s1:l10" met="3" type="-+">Van ons-lié <rhyme label="g" type="m" corresp="#s1:l9">al-te-gader</rhyme>,</l>
        <l id="s1:l11" met="3" type="+-">De Wereldt blyft in <rhyme label="h" type="f">essi'</rhyme></l>
        <l id="s1:l12" met="3" type="-+">Door 't edel <rhyme label="i" type="m">Houwelyck</rhyme>,</l>
        <l id="s1:l13" met="3" type="-+">De Liefde is den <rhyme label="j" type="m">Athlas</rhyme></l>
        <l id="s1:l14" met="3" type="-+">Van heel het <rhyme label="i" type="m" corresp="#s1:l12">Aerde-ryck</rhyme>,</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">In Rycken ende <rhyme label="a" type="f">Steden</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Bestaet het <rhyme label="b" type="m">Aerde-ryck</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">De Stadt bestaet in <rhyme label="c" type="f">Huysen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Het Huys in 't <rhyme label="b" type="m" corresp="#s2:l2">Houwelyck</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Neemt eens van uyt de <rhyme label="d" type="f">Wereldt</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Het edel <rhyme label="e" type="m">Houwelyck</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">En ghy sult <rhyme label="f" type="m">ruineren</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Gheheel het <rhyme label="e" type="m" corresp="#s2:l6">Aerde-ryck</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">De steden ende <rhyme label="g" type="m">Rycken</rhyme></l>
        <l id="s2:l10" met="3" type="-+">Die sullen haest <rhyme label="g" type="m" corresp="#s2:l9">beswycken</rhyme>,</l>
        <l id="s2:l11" met="3" type="+-">Niemandt en sal daer <rhyme label="h" type="f">leven</rhyme></l>
        <l id="s2:l12" met="3" type="-+">In gansch het <rhyme label="i" type="m">aerdtsche-dal</rhyme>,</l>
        <l id="s2:l13" met="3" type="-+">Wanneer op dese <rhyme label="j" type="m">Wereldt</rhyme></l>
        <l id="s2:l14" met="3" type="-+">De Liefde sterven <rhyme label="i" type="m" corresp="#s2:l12">sal</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Den Paus, en <rhyme label="a" type="f">Cardinalen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Met allen hunnen <rhyme label="b" type="m">raedt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Bisschoppen, en <rhyme label="c" type="f">Prelaten</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Den Abt met synen <rhyme label="b" type="m" corresp="#s3:l2">staet</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">De Proosten, en <rhyme label="d" type="f">Plebanen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Doctoren in 't <rhyme label="e" type="m">ghemeyn</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Pastoors, en <rhyme label="f" type="m">Cappellanen</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">De Kloosters groot en <rhyme label="e" type="m" corresp="#s3:l6">kleyn</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Met alle de <rhyme label="g" type="m">Canonicken</rhyme>,</l>
        <l id="s3:l10" met="3" type="-+">En soo veel duysent <rhyme label="g" type="m" corresp="#s3:l9">Monickẽ</rhyme></l>
        <l id="s3:l11" met="3" type="+-">Beggynen, Nonnen, <rhyme label="h" type="f">Quesels</rhyme>,</l>
        <l id="s3:l12" met="3" type="-+">De Menschen <rhyme label="i" type="m">al-ghelyck</rhyme>,</l>
        <l id="s3:l13" met="3" type="-+">En komen uyt gheen <rhyme label="j" type="m">Koolen</rhyme>,</l>
        <l id="s3:l14" met="3" type="-+">Maer uyt het <rhyme label="i" type="m" corresp="#s3:l12">Houwelyck</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">De Koninghen en <rhyme label="a" type="f">Keysers</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">De Princen van het <rhyme label="b" type="m">Ryck</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">De Raedts-heers, de <rhyme label="c" type="f">Doctoren</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Al 't Volck van 't <rhyme label="b" type="m" corresp="#s4:l2">Aerde-ryck</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">De Boeren op de <rhyme label="d" type="f">Velden</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">De Herders by het <rhyme label="e" type="m">Vee</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Soldaten in den <rhyme label="f" type="m">Oorlogh</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">De Schippers op de <rhyme label="e" type="m" corresp="#s4:l6">Zee</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">De Borghers in de <rhyme label="g" type="m">Steden</rhyme></l>
        <l id="s4:l10" met="3" type="-+">Brenght ons de Liefde <rhyme label="g" type="m" corresp="#s4:l9">mede</rhyme>,</l>
        <l id="s4:l11" met="3" type="+-">De Wereldt blyft in <rhyme label="h" type="f">essi'</rhyme></l>
        <l id="s4:l12" met="3" type="-+">Door 't edel <rhyme label="i" type="m">Houwelyck</rhyme>,</l>
        <l id="s4:l13" met="3" type="-+">De Liefden is den <rhyme label="j" type="m">Athlas</rhyme></l>
        <l id="s4:l14" met="3" type="-+">Van heel het <rhyme label="i" type="m" corresp="#s4:l12">Aerde-ryck</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

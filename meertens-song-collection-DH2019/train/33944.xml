  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">JEsus sijn reys voort <rhyme label="a" type="m">dee'</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Uyt Jericho; daer <rhyme label="b" type="f">waren</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Sittende Blinden <rhyme label="a" type="m" corresp="#s1:l1">twee</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">s' Hoorden den loop der <rhyme label="b" type="f" corresp="#s1:l2">scharen</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Ende als sy <rhyme label="c" type="f">vernamen</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Dat daer Heer Iesus <rhyme label="d" type="m">was</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Die dat heen voor-by <rhyme label="c" type="f" corresp="#s1:l5">quamen</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Riepen s' om luyde <rhyme label="d" type="m" corresp="#s1:l6">ras</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">O Davids Soon, o <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Wilt onser togh <rhyme label="b" type="f">ontfermen</rhyme>.</l>
        <l id="s2:l3" met="3" type="-+">De Schaer bestraft haer <rhyme label="a" type="m" corresp="#s2:l1">seer</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Seyden, houdt op van <rhyme label="b" type="f" corresp="#s2:l2">kermen</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Sy riepen dies te <rhyme label="c" type="f">meere</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Seggende, Davids <rhyme label="d" type="m">Soon</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Ontfermt u ons, o <rhyme label="c" type="f" corresp="#s2:l5">Heere</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Ons uwe goetheyt <rhyme label="d" type="m" corresp="#s2:l6">toon</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Iesus bleef staende <rhyme label="a" type="m">stil</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Heeft haer by hem <rhyme label="b" type="f">ontboode</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Hy seyd', wat is uw <rhyme label="a" type="m" corresp="#s3:l1">wil</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Of wat is u van <rhyme label="b" type="f" corresp="#s3:l2">noode</rhyme>?</l>
        <l id="s3:l5" met="3" type="-+">Sy seggen, dat wy <rhyme label="c" type="f">moogen</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Werden van u <rhyme label="d" type="m">verlicht</rhyme>.</l>
        <l id="s3:l7" met="3" type="-+">Iesus aenraekt haer <rhyme label="c" type="f" corresp="#s3:l5">oogen</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">En opent haer <rhyme label="d" type="m" corresp="#s3:l6">gesicht</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Als sy nu sagen <rhyme label="a" type="m">klaer</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Hebbend' 't gesicht <rhyme label="b" type="f">gekreegen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Volghden sy Iesum <rhyme label="a" type="m" corresp="#s4:l1">naer</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Met d'ander, langhs de <rhyme label="b" type="f" corresp="#s4:l2">weegen</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">O Jesu, ons <rhyme label="c" type="f">gesichte</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Der sielen open <rhyme label="d" type="m">doet</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Dat wy door Godtlijk <rhyme label="c" type="f" corresp="#s4:l5">Lichte</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Volgen u voet aen <rhyme label="d" type="m" corresp="#s4:l6">voet</rhyme>.</l>
      </lg>
    </lg>
  </text>

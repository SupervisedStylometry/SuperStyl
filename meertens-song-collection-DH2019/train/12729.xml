  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">Siele! wat het <rhyme label="a" type="m">Vleys</rhyme></l>
        <l id="s1:l2" met="3" type="+-">Kan of mach <rhyme label="b" type="f">beminnen</rhyme>,</l>
        <l id="s1:l3" met="3" type="+-">Set dat nu een <rhyme label="a" type="m" corresp="#s1:l1">reys</rhyme></l>
        <l id="s1:l4" met="3" type="+-">Uyt uw’ losse <rhyme label="b" type="f" corresp="#s1:l2">sinnen</rhyme>:</l>
        <l id="s1:l5" met="3" type="+-">En aensiet het <rhyme label="c" type="m">Lam</rhyme>,</l>
        <l id="s1:l6" met="3" type="+-">Dat van boven <rhyme label="c" type="m" corresp="#s1:l5">quam</rhyme></l>
        <l id="s1:l7" met="4" type="+-">Uyt sijn eeuwigh <rhyme label="d" type="m">Hemel-huys</rhyme>:</l>
        <l id="s1:l8" met="3" type="+-">Siet u Heylandt <rhyme label="e" type="f">hangen</rhyme>,</l>
        <l id="s1:l9" met="3" type="+-">Met bebloede <rhyme label="e" type="f" corresp="#s1:l8">wangen</rhyme>,</l>
        <l id="s1:l10" met="4" type="+-">Vast ghenagelt aen het <rhyme label="d" type="m" corresp="#s1:l7">Kruys</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Siet sijn hooft <rhyme label="a" type="m">gebuylt</rhyme></l>
        <l id="s2:l2" met="3" type="+-">Door de felle <rhyme label="b" type="f">slagen</rhyme>,</l>
        <l id="s2:l3" met="3" type="+-">En diep <rhyme label="a" type="m" corresp="#s2:l1">ingekuylt</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">Van ’t ghewelt te <rhyme label="b" type="f" corresp="#s2:l2">dragen</rhyme>,</l>
        <l id="s2:l5" met="3" type="+-">Dat hy sonder <rhyme label="c" type="m">schult</rhyme></l>
        <l id="s2:l6" met="3" type="+-">Met een taey <rhyme label="c" type="m" corresp="#s2:l5">gedult</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Evenwel niet sonder <rhyme label="d" type="m">schrick</rhyme>,</l>
        <l id="s2:l8" met="3" type="+-">Willigh hier <rhyme label="e" type="f">beneden</rhyme></l>
        <l id="s2:l9" met="3" type="+-">Voor ons heeft <rhyme label="e" type="f" corresp="#s2:l8">geleden</rhyme>,</l>
        <l id="s2:l10" met="4" type="+-">Tot hy gaf de leste <rhyme label="d" type="m" corresp="#s2:l7">snick</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Maer wanneer sijn <rhyme label="a" type="m">Geest</rhyme></l>
        <l id="s3:l2" met="3" type="+-">Vryheyt had’ <rhyme label="b" type="f">verworven</rhyme>,</l>
        <l id="s3:l3" met="3" type="+-">Sagh men <rhyme label="a" type="m" corresp="#s3:l1">aldermeest</rhyme></l>
        <l id="s3:l4" met="3" type="+-">Wie daer was <rhyme label="b" type="f" corresp="#s3:l2">ghestorven</rhyme>:</l>
        <l id="s3:l5" met="3" type="+-">Daer was geen <rhyme label="c" type="m">getaen</rhyme></l>
        <l id="s3:l6" met="3" type="+-">Noch van Son noch <rhyme label="c" type="m" corresp="#s3:l5">Maen</rhyme>:</l>
        <l id="s3:l7" met="4" type="+-">Evenwel den Hemel <rhyme label="d" type="m">treurd</rhyme>’:</l>
        <l id="s3:l8" met="3" type="+-">Want de Son <rhyme label="e" type="f">ontluystert</rhyme>,</l>
        <l id="s3:l9" met="3" type="+-">Wierd’ geheel <rhyme label="e" type="f" corresp="#s3:l8">verduystert</rhyme>,</l>
        <l id="s3:l10" met="4" type="+-">En des Tempels Voorhang <rhyme label="d" type="m" corresp="#s3:l7">scheurd</rhyme>’.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">d’Aerde gaf een <rhyme label="a" type="m">slagh</rhyme></l>
        <l id="s4:l2" met="3" type="+-">In haer <rhyme label="b" type="f">ingewanden</rhyme>,</l>
        <l id="s4:l3" met="3" type="+-">Dat de leste <rhyme label="a" type="m" corresp="#s4:l1">dagh</rhyme></l>
        <l id="s4:l4" met="3" type="+-">Scheen te zijn <rhyme label="b" type="f" corresp="#s4:l2">voor-handen</rhyme>:</l>
        <l id="s4:l5" met="3" type="+-">Rotzen dick en <rhyme label="c" type="m">swaer</rhyme></l>
        <l id="s4:l6" met="3" type="+-">Borsten van <rhyme label="c" type="m" corresp="#s4:l5">malka’er</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">En, O wonder! boven <rhyme label="d" type="m">dat</rhyme>,</l>
        <l id="s4:l8" met="3" type="+-">Die in d’aerde <rhyme label="e" type="f">sliepen</rhyme></l>
        <l id="s4:l9" met="3" type="+-">Quamen uyt, en <rhyme label="e" type="f" corresp="#s4:l8">liepen</rhyme></l>
        <l id="s4:l10" met="4" type="+-">Kenbaer na de heyl’ge <rhyme label="d" type="m" corresp="#s4:l7">Stadt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="+-">Schoon dit is <rhyme label="a" type="m">geschiet</rhyme></l>
        <l id="s5:l2" met="3" type="+-">Langen tijdt voor <rhyme label="b" type="f">desen</rhyme>,</l>
        <l id="s5:l3" met="3" type="+-">Twijffelt daerom <rhyme label="a" type="m" corresp="#s5:l1">niet</rhyme></l>
        <l id="s5:l4" met="3" type="+-">Of het soo mach <rhyme label="b" type="f" corresp="#s5:l2">wesen</rhyme>:</l>
        <l id="s5:l5" met="3" type="+-">Denck, aen d’ander <rhyme label="c" type="m">kant</rhyme>,</l>
        <l id="s5:l6" met="3" type="+-">Wat een Helsche <rhyme label="c" type="m" corresp="#s5:l5">brant</rhyme></l>
        <l id="s5:l7" met="4" type="+-">Dat de Sonde wesen <rhyme label="d" type="m">moet</rhyme>:</l>
        <l id="s5:l8" met="3" type="+-">Die niet was te <rhyme label="e" type="f">helpen</rhyme>,</l>
        <l id="s5:l9" met="3" type="+-">T’uyten, noch te <rhyme label="e" type="f" corresp="#s5:l8">stelpen</rhyme></l>
        <l id="s5:l10" met="4" type="+-">Als door Christi dierbaer <rhyme label="d" type="m" corresp="#s5:l7">bloet</rhyme>!</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="+-">Dat daer stroomden <rhyme label="a" type="m">he’en</rhyme></l>
        <l id="s6:l2" met="3" type="+-">Langs sijn heyl’ge <rhyme label="b" type="f">leden</rhyme>,</l>
        <l id="s6:l3" met="3" type="+-">Soo dat hy <rhyme label="a" type="m" corresp="#s6:l1">alleen</rhyme></l>
        <l id="s6:l4" met="3" type="+-">Moest de Wijn-pars <rhyme label="b" type="f" corresp="#s6:l2">treden</rhyme>:</l>
        <l id="s6:l5" met="3" type="+-">Maer om alle <rhyme label="c" type="m">dingh</rhyme>,</l>
        <l id="s6:l6" met="3" type="+-">Om ons <rhyme label="c" type="m" corresp="#s6:l5">Rekeningh</rhyme></l>
        <l id="s6:l7" met="4" type="+-">t’Eenemael te sien <rhyme label="d" type="m">betaelt</rhyme>,</l>
        <l id="s6:l8" met="3" type="+-">Is hy noch ten <rhyme label="e" type="f">lesten</rhyme>.</l>
        <l id="s6:l9" met="3" type="+-">En tot onsen <rhyme label="e" type="f" corresp="#s6:l8">besten</rhyme></l>
        <l id="s6:l10" met="4" type="+-">Oock ter Hellen ne’er <rhyme label="d" type="m" corresp="#s6:l7">gedaelt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="+-">Daer hy door sijn <rhyme label="a" type="m">kracht</rhyme>,</l>
        <l id="s7:l2" met="3" type="+-">Al wat ons soud’ <rhyme label="b" type="f">komen</rhyme></l>
        <l id="s7:l3" met="3" type="+-">Schaden, heeft <rhyme label="a" type="m" corresp="#s7:l1">ontmacht</rhyme></l>
        <l id="s7:l4" met="3" type="+-">En geheel <rhyme label="b" type="f" corresp="#s7:l2">verwonnen</rhyme>.</l>
        <l id="s7:l5" met="3" type="+-">Winbaer <rhyme label="c" type="m">op-gestaen</rhyme>,</l>
        <l id="s7:l6" met="3" type="+-">Is hy he’en <rhyme label="c" type="m" corresp="#s7:l5">gegaen</rhyme></l>
        <l id="s7:l7" met="4" type="+-">Tot een hoogh verheven <rhyme label="d" type="m">standt</rhyme>,</l>
        <l id="s7:l8" met="3" type="+-">Hemel-waerts <rhyme label="e" type="f">gevaren</rhyme></l>
        <l id="s7:l9" met="3" type="+-">Boven al <rhyme label="e" type="f" corresp="#s7:l8">d’Heyrscharen</rhyme>,</l>
        <l id="s7:l10" met="4" type="+-">Aen sijn Vaders <rhyme label="d" type="m" corresp="#s7:l7">Rechter-handt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="+-">Waer van daen hy <rhyme label="a" type="m">weer</rhyme>,</l>
        <l id="s8:l2" met="3" type="+-">Alles te <rhyme label="b" type="f">beslechten</rhyme>,</l>
        <l id="s8:l3" met="3" type="+-">Komen sal in <rhyme label="a" type="m" corresp="#s8:l1">eer</rhyme></l>
        <l id="s8:l4" met="3" type="+-">En de Werelt <rhyme label="b" type="f" corresp="#s8:l2">rechten</rhyme>:</l>
        <l id="s8:l5" met="3" type="+-">Met een roep, van <rhyme label="c" type="m">loop</rhyme></l>
        <l id="s8:l6" met="3" type="+-">Ghy vervloeckten <rhyme label="c" type="m" corresp="#s8:l5">hoop</rhyme>,</l>
        <l id="s8:l7" met="4" type="+-">Gaet in ’t eeuwige <rhyme label="d" type="m">verderf</rhyme>:</l>
        <l id="s8:l8" met="3" type="+-">Ghy doch, mijn <rhyme label="e" type="f">ghesinde</rhyme>,</l>
        <l id="s8:l9" met="3" type="+-">Eeuwigheyts <rhyme label="e" type="f" corresp="#s8:l8">Beminde</rhyme>,</l>
        <l id="s8:l10" met="4" type="+-">Komt, besit uw’s Vaders <rhyme label="d" type="m" corresp="#s8:l7">Erf</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

    <melody>Ik ben een arme pelgrim hier</melody>
    <categories>
      <category translation="seasons and annual events">jaarkring</category>
    </categories>
  <author>Christianus Vermeulen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">PElgrims, Godt groet u <rhyme label="a" type="m">alle-bey</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Godt groet u d'een soo wel, als <rhyme label="b" type="f">d'ander</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Godt gheef u 'tsamen goet <rhyme label="a" type="m" corresp="#s1:l1">gheley</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Wat praetj' onder <rhyme label="b" type="f" corresp="#s1:l2">malkander</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wel! Borgher van <rhyme label="a" type="m">Ierusalem</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Hebt ghy alleen niet hooren <rhyme label="b" type="f">spreecken</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Oock uyt de alghemeyne <rhyme label="a" type="m" corresp="#s2:l1">stem</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Of hebje Pelgrims <rhyme label="b" type="f" corresp="#s2:l2">streecken</rhyme>?</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Van 't gheene datter is <rhyme label="a" type="m">gheschiet</rhyme></l>
        <l id="s3:l2" met="4" type="-+">In dese lest-gheleden <rhyme label="b" type="f">daghen</rhyme>?</l>
        <l id="s3:l3" met="4" type="-+">Wat dinghen doch? wel weetjet <rhyme label="a" type="m" corresp="#s3:l1">niet</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Wat Jesus heeft <rhyme label="b" type="f" corresp="#s3:l2">verdraghen</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Op hem was onse hoop <rhyme label="a" type="m">ghestelt</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Als dat hy Israel sou <rhyme label="b" type="f">bevrijden</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Maer nu soo heeft hem het <rhyme label="a" type="m" corresp="#s4:l1">ghewelt</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Van't Sannedrin doen <rhyme label="b" type="f" corresp="#s4:l2">lijden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Aen't Cruys een al te snoode <rhyme label="a" type="m">doodt</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">En 'tis noch huyden daer <rhyme label="b" type="f">beneven</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Den derden dach, dat dese <rhyme label="a" type="m" corresp="#s5:l1">stoot</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Hem van ons heeft <rhyme label="b" type="f" corresp="#s5:l2">ghedreven</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">'tIs waer, daer is een Vrouw, drie, <rhyme label="a" type="m">vier</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Aen 'tGraf geweest om hem te <rhyme label="b" type="f">soecken</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Maer hebben daer ghevonden <rhyme label="a" type="m" corresp="#s6:l1">schier</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Niet anders, als de <rhyme label="b" type="f" corresp="#s6:l2">doecken</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Doch segghen, daer in wit <rhyme label="a" type="m">ghewaedt</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Ghesien te hebben een deel <rhyme label="b" type="f">Geesten</rhyme>;</l>
        <l id="s7:l3" met="4" type="-+">Maer lacy! 'tis maer Vrouwen <rhyme label="a" type="m" corresp="#s7:l1">praet</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">W'ontbeeren't <rhyme label="b" type="f" corresp="#s7:l2">aldermeeste</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">O sotheyt! O verblintheyt <rhyme label="a" type="m">groot</rhyme>!</l>
        <l id="s8:l2" met="4" type="-+">In 'tgheen de Wet, en de <rhyme label="b" type="f">Propheten</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Van Christus leven, en van <rhyme label="a" type="m" corresp="#s8:l1">doodt</rhyme></l>
        <l id="s8:l4" met="3" type="-+">U hebben laten <rhyme label="b" type="f" corresp="#s8:l2">weten</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">En hier deed' hy haer een <rhyme label="a" type="m">vermaen</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Van Moyses af, door al <rhyme label="b" type="f">d'history</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Des oude Schrifts, dat Christus <rhyme label="a" type="m" corresp="#s9:l1">gaen</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Door 'tCruys most in zijn <rhyme label="b" type="f" corresp="#s9:l2">glory</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Soo lanck tot dat sy nu <rhyme label="a" type="m">omtrent</rhyme></l>
        <l id="s10:l2" met="4" type="-+">'tCasteel van Emaus zijn <rhyme label="b" type="f">ghekomen</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Daer d'Heer van hen niet <rhyme label="a" type="m" corresp="#s10:l1">onbekent</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Schier oorloff hadd' <rhyme label="b" type="f" corresp="#s10:l2">ghenomen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Ey! blijft by ons, den avondt <rhyme label="a" type="m">naeckt</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Wy sullen lijden gheen van <rhyme label="b" type="f">beyden</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Dat ghy sult blijven <rhyme label="a" type="m" corresp="#s11:l1">onghedaeckt</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Oft u van ons sult <rhyme label="b" type="f" corresp="#s11:l2">scheyden</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">En siet, Heer Jesus bleef <rhyme label="a" type="m">ghenoodt</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">En als hy nu was neer <rhyme label="b" type="f">gheseten</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Brack hy hen het gheseghent <rhyme label="a" type="m" corresp="#s12:l1">Broodt</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">En gaff hen om te <rhyme label="b" type="f" corresp="#s12:l2">eten</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">'tWas nu ghesmaeckt, en siet, het <rhyme label="a" type="m">licht</rhyme></l>
        <l id="s13:l2" met="4" type="-+">Des Hemels opende hen <rhyme label="b" type="f">d'ooghen</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Soo dat's erkende hen <rhyme label="a" type="m" corresp="#s13:l1">ghesicht</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Maer 'twierdt hem stracx <rhyme label="b" type="f" corresp="#s13:l2">ontooghen</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Maer als sy nu van hem <rhyme label="a" type="m">ghewis</rhyme></l>
        <l id="s14:l2" met="4" type="-+">Hem meynden gins en weer <rhyme label="b" type="f">t'om-armen</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Soo sloeghen sy haer handen <rhyme label="a" type="m" corresp="#s14:l1">mis</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">En Cleophas, <rhyme label="b" type="f" corresp="#s14:l2">och-armen</rhyme>!</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Versteecken van zijns Meesters <rhyme label="a" type="m">hals</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">Riep: mocht ons niet met re'en wel <rhyme label="b" type="f">branden</rhyme></l>
        <l id="s15:l3" met="4" type="-+">Het binnenste ons s'herten, <rhyme label="a" type="m" corresp="#s15:l1">als</rhyme></l>
        <l id="s15:l4" met="3" type="-+">Hy ons sprack achter <rhyme label="b" type="f" corresp="#s15:l2">Landen</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">En stracx weerom te ruggh' <rhyme label="a" type="m">ghekeert</rhyme></l>
        <l id="s16:l2" met="4" type="-+">Naer Salem d'alder oudtste <rhyme label="b" type="f">Stede</rhyme>,</l>
        <l id="s16:l3" met="4" type="-+">Daer sy noch quamen, soo m'ons <rhyme label="a" type="m" corresp="#s16:l1">leert</rhyme>,</l>
        <l id="s16:l4" met="3" type="-+">By tijdts tot Christus <rhyme label="b" type="f" corresp="#s16:l2">vrede</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Heer, blijft by ons, en maeckt ons <rhyme label="a" type="m">kloeck</rhyme>,</l>
        <l id="s17:l2" met="4" type="-+">Den donck'ren avondt naeckt, <rhyme label="b" type="f">eylacen</rhyme>!</l>
        <l id="s17:l3" met="4" type="-+">Dit is het slot van ons <rhyme label="a" type="m" corresp="#s17:l1">versoeck</rhyme>,</l>
        <l id="s17:l4" met="3" type="-+">Op desen tweeden <rhyme label="b" type="f" corresp="#s17:l2">Paessen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

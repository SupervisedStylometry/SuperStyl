  <author>Jacob Rosant</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HEer Iesus seydt, van <rhyme label="a" type="m">gulsigheydt</rhyme></l>
        <l id="s1:l2" met="4" type="-+">En dronkenschap wilt u <rhyme label="b" type="f">bewaren</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">En van 's Weerelts <rhyme label="a" type="m" corresp="#s1:l1">sorghvuldigheydt</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Die welke 't hart <rhyme label="b" type="f" corresp="#s1:l2">beswaren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Want 's Oordeels-dagh sal <rhyme label="a" type="m">onverdacht</rhyme></l>
        <l id="s2:l2" met="4" type="-+">De menschen haestigh <rhyme label="b" type="f">overvalle</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Gelijk een strik heel <rhyme label="a" type="m" corresp="#s2:l1">onverwacht</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Die sijn op 't aerdtsche <rhyme label="b" type="f" corresp="#s2:l2">dalle</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Als 't in voortijden is <rhyme label="a" type="m">geschiet</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Als Noë sijne Arke <rhyme label="b" type="f">bouwden</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Men at, men dronk, sonder <rhyme label="a" type="m" corresp="#s3:l1">verdriet</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Men Houwden,  en men <rhyme label="b" type="f" corresp="#s3:l2">Trouwden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Tot Noë in de Arke <rhyme label="a" type="m">tradt</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Den Water-vloedt sy niet en <rhyme label="b" type="f">aghten</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">De welk haer heeft verdronken <rhyme label="a" type="m" corresp="#s4:l1">radt</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Als sy dat niet <rhyme label="b" type="f" corresp="#s4:l2">verwaghten</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Soo was 't ter tijdt van Loth al <rhyme label="a" type="m">meed'</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Men at, men dronk, men plante <rhyme label="b" type="f">boomen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Men bouwden, hoopmanschap men <rhyme label="a" type="m" corresp="#s5:l1">deed'</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Tot dat 't vier is <rhyme label="b" type="f" corresp="#s5:l2">gekoomen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Het vier vermenght met swavel <rhyme label="a" type="m">quam</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Soo rasch als Loth het landt <rhyme label="b" type="f">uyt-trede</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">En stelden Sodoma in <rhyme label="a" type="m" corresp="#s6:l1">vlam</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">En 't al vernielen <rhyme label="b" type="f" corresp="#s6:l2">deede</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Op dees maniere sal 't ook <rhyme label="a" type="m">gaen</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Als 's menschen Soone sal <rhyme label="b" type="f">verschijne</rhyme>;</l>
        <l id="s7:l3" met="4" type="-+">Die op 't dak is, klim niet van <rhyme label="a" type="m" corresp="#s7:l1">daen</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Om uyt 't huys t'halen 't <rhyme label="b" type="f" corresp="#s7:l2">sijne</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Die in het velt is, niet <rhyme label="a" type="m">weer-keer</rhyme>.</l>
        <l id="s8:l2" met="4" type="-+">Wilt om de Huys-vrouw van Loth <rhyme label="b" type="f">denken</rhyme>.</l>
        <l id="s8:l3" met="4" type="-+">Die welk sijn leeven mint te <rhyme label="a" type="m" corresp="#s8:l1">seer</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Die sal sijn leeven <rhyme label="b" type="f" corresp="#s8:l2">krenken</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">So wie sijn leeven graegh <rhyme label="a" type="m">verlaet</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Die hem wel levendigh sal <rhyme label="b" type="f">maken</rhyme>.</l>
        <l id="s9:l3" met="4" type="-+">Ik segh u-lieden, wel <rhyme label="a" type="m" corresp="#s9:l1">verstaet</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Dees wonderlijke <rhyme label="b" type="f" corresp="#s9:l2">saken</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Op deese tijden sal der <rhyme label="a" type="m">twee</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Op een bedt by elkander <rhyme label="b" type="f">weesen</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Men sal den ander neemen <rhyme label="a" type="m" corresp="#s10:l1">mee</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Men sal verlaten <rhyme label="b" type="f" corresp="#s10:l2">deesen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">In eenen Moolen sal der <rhyme label="a" type="m">twee</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Te samen op dien tijt gaen <rhyme label="b" type="f">malen</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Men sal den een niet neemen <rhyme label="a" type="m" corresp="#s11:l1">mee</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Den ander salmen <rhyme label="b" type="f" corresp="#s11:l2">halen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Daer sal der twee sijn op het <rhyme label="a" type="m">veldt</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Den een sal worden <rhyme label="b" type="f">op-genoomen</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Den ander niet. Maer Heer <rhyme label="a" type="m" corresp="#s12:l1">vertelt</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Waer sullen die dan <rhyme label="b" type="f" corresp="#s12:l2">koomen</rhyme>?</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Heer Jesus seyt haer tot <rhyme label="a" type="m">antwoort</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Soo waer dat is een dood <rhyme label="b" type="f">lichame</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Aldaer vergaderen ook <rhyme label="a" type="m" corresp="#s13:l1">voort</rhyme></l>
        <l id="s13:l4" met="3" type="-+">De Arenden te <rhyme label="b" type="f" corresp="#s13:l2">same</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">O Heer, gy leert met klaer <rhyme label="a" type="m">bescheyt</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">Hoe dat wy hooren op te <rhyme label="b" type="f">passen</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Op dat wy houden ons <rhyme label="a" type="m" corresp="#s14:l1">bereyt</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">En laten niet <rhyme label="b" type="f" corresp="#s14:l2">verrassen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

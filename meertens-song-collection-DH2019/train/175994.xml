  <author>Jacobus Revius</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DEs goddeloosen sondich <rhyme label="a" type="m">werck</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Maeckt dat ick in mijn hert <rhyme label="a" type="m" corresp="#s1:l1">bemerck</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Dat hy niet vreest den <rhyme label="b" type="f">Heere</rhyme>.</l>
        <l id="s1:l4" met="4" type="-+">Want hy int boose hem <rhyme label="c" type="m">behaecht</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">Of yederman daer over <rhyme label="c" type="m" corresp="#s1:l4">claecht</rhyme>.</l>
        <l id="s1:l6" met="3" type="-+">Hy achtet geen <rhyme label="b" type="f" corresp="#s1:l3">oneere</rhyme>.</l>
        <l id="s1:l7" met="4" type="-+">Bedriegelijck syn woorden <rhyme label="d" type="m">gaen</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">Het goede wil hy niet <rhyme label="d" type="m" corresp="#s1:l7">verstaen</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Hy gaet verkeerde <rhyme label="e" type="f">paden</rhyme>,</l>
        <l id="s1:l10" met="4" type="-+">Wanneer hy op syn bedde <rhyme label="f" type="m">leyt</rhyme></l>
        <l id="s1:l11" met="4" type="+-">Bedenckt hy niet dan <rhyme label="f" type="m" corresp="#s1:l10">dubbelheyt</rhyme>:</l>
        <l id="s1:l12" met="3" type="-+">Hy schout geen boose <rhyme label="e" type="f" corresp="#s1:l9">daden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">V goetheyt, Heer, den hemel <rhyme label="a" type="m">naeckt</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">V waerheyt aen de wolcken <rhyme label="a" type="m" corresp="#s2:l1">raeckt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">V trouwe <rhyme label="b" type="f">goedertieren</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Gelijck een afgront diepe <rhyme label="c" type="m">gaet</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Als Godes berch u oordeel <rhyme label="c" type="m" corresp="#s2:l4">staet</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Ghy hoedet mensch en <rhyme label="b" type="f" corresp="#s2:l3">dieren</rhyme>.</l>
        <l id="s2:l7" met="4" type="-+">Hoe dierbaer is u <rhyme label="d" type="m">soeticheyt</rhyme>!</l>
        <l id="s2:l8" met="4" type="-+">V vleugelen wijt <rhyme label="d" type="m" corresp="#s2:l7">uytgebreyt</rhyme></l>
        <l id="s2:l9" met="3" type="-+">Syn ons een stille <rhyme label="e" type="f">haven</rhyme>.</l>
        <l id="s2:l10" met="4" type="-+">Ghy schenckt ons uwes huyses <rhyme label="f" type="m">goet</rhyme>,</l>
        <l id="s2:l11" met="4" type="+-">Met wellust, als met eenen <rhyme label="f" type="m" corresp="#s2:l10">vloet</rhyme>,</l>
        <l id="s2:l12" met="3" type="-+">Comt ghy ons' ziele <rhyme label="e" type="f" corresp="#s2:l9">laven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Want by u is des levens <rhyme label="a" type="m">bron</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Ghy zijt alleen de clare <rhyme label="a" type="m" corresp="#s3:l1">son</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Waer door wy 't licht <rhyme label="b" type="f">aenschouwen</rhyme>.</l>
        <l id="s3:l4" met="4" type="-+">Toont u genade voort en <rhyme label="c" type="m">voort</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Aen die u kennen als 't <rhyme label="c" type="m" corresp="#s3:l4">behoort</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En uwe trou den <rhyme label="b" type="f" corresp="#s3:l3">trouwen</rhyme>.</l>
        <l id="s3:l7" met="4" type="-+">Des stouten voet my niet en <rhyme label="d" type="m">tree</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">Des boosen hant doe my geen <rhyme label="d" type="m" corresp="#s3:l7">wee</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Noch stoote my ter <rhyme label="e" type="f">neder</rhyme>.</l>
        <l id="s3:l10" met="4" type="-+">Siet daer, de goddelosen <rhyme label="f" type="m">al</rhyme></l>
        <l id="s3:l11" met="4" type="+-">Syn haestelick geraeckt ten <rhyme label="f" type="m" corresp="#s3:l10">val</rhyme>,</l>
        <l id="s3:l12" met="3" type="-+">En rijsen nimmer <rhyme label="e" type="f" corresp="#s3:l9">weder</rhyme>.</l>
      </lg>
    </lg>
  </text>

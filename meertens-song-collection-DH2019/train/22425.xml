  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">GHeeft ons vrede in desen <rhyme label="a" type="m">tijt</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">O Heer noot is <rhyme label="b" type="f">voorhanden</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Den vyandt neempt hier gheen <rhyme label="a" type="m" corresp="#s1:l1">respijt</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Om te brenghen tot <rhyme label="b" type="f" corresp="#s1:l2">schanden</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">Den name Christ, en stopt met <rhyme label="c" type="m">list</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Den rechten dienst des <rhyme label="d" type="f">Heeren</rhyme>:</l>
        <l id="s1:l7" met="4" type="-+">Maer hout dien reyn, hier in dit <rhyme label="e" type="m">pleyn</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">En wilt den vyant <rhyme label="d" type="f" corresp="#s1:l6">keeren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Gheeft oock den peys die wy syn <rhyme label="a" type="m">quijt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Door onghelooue en boos <rhyme label="b" type="f">leuen</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Ghy biet ons aen u woort <rhyme label="a" type="m" corresp="#s2:l1">subijt</rhyme>/</l>
        <l id="s2:l4" met="3" type="-+">Daer wy heel <rhyme label="b" type="f" corresp="#s2:l2">wederstreuen</rhyme>:</l>
        <l id="s2:l5" met="4" type="-+">Die salicheyt, door ons <rhyme label="c" type="m">boosheyt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Met wille wy <rhyme label="d" type="f">verdrijuen</rhyme>:</l>
        <l id="s2:l7" met="4" type="-+">Tis openbaer, in u woort <rhyme label="e" type="m">waer</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Tminste deel hier <rhyme label="d" type="f" corresp="#s2:l6">beclijuen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Den Gheest des vredens ons <rhyme label="a" type="m">toesent</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Die onse herten <rhyme label="b" type="f">rouwe</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">En leyde ons sonden <rhyme label="a" type="m" corresp="#s3:l1">verblent</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Tot Jhesum Christum <rhyme label="b" type="f" corresp="#s3:l2">ghetrouwe</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Dat syn ghenade, schande en <rhyme label="c" type="m">schade</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En allen Krijch af <rhyme label="d" type="f">keere</rhyme>:</l>
        <l id="s3:l7" met="4" type="-+">Int aertsche dal, van dit volck <rhyme label="e" type="m">al</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Tot dijn lof, Godt prijs ende <rhyme label="d" type="f" corresp="#s3:l6">eere</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

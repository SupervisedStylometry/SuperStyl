    <melody>Nadien uw goddelijkheid</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>M. van de Speybroek</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Bruydegom mijn <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Die ick beminne <rhyme label="a" type="m" corresp="#s1:l1">seer</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Boven ander <rhyme label="b" type="f">Minnaren</rhyme>:</l>
        <l id="s1:l4" met="3" type="-+">Ick draeg u liefd' in 't <rhyme label="c" type="m">hert</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Wilt my altijdt <rhyme label="b" type="f" corresp="#s1:l3">bewaren</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Voor droefheyt ende <rhyme label="c" type="m" corresp="#s1:l4">smet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Gy zijt een Koning <rhyme label="a" type="m">wijs</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Die daer regeert <rhyme label="a" type="m" corresp="#s2:l1">propijs</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Met uwen Vader <rhyme label="b" type="f">machtig</rhyme>:</l>
        <l id="s2:l4" met="3" type="-+">Een over-rijcke <rhyme label="c" type="m">Heer</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Maer ick arrem <rhyme label="b" type="f" corresp="#s2:l3">onkrachtig</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Ellendig ende <rhyme label="c" type="m" corresp="#s2:l4">teer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Schaemte heeft my <rhyme label="a" type="m">omvaen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Ick derf qualijck <rhyme label="a" type="m" corresp="#s3:l1">op-slaen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Tot u mijn oogen <rhyme label="b" type="f">klare</rhyme>:</l>
        <l id="s3:l4" met="3" type="-+">Als gy u <rhyme label="c" type="m">Majesteyt</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">My komt <rhyme label="b" type="f" corresp="#s3:l3">openbaren</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Vind' ick my <rhyme label="c" type="m" corresp="#s3:l4">onbereyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Koning Bruydegom <rhyme label="a" type="m">gy</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Twee vleugels dienen <rhyme label="a" type="m" corresp="#s4:l1">my</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Om mijn aensicht te <rhyme label="b" type="f">decken</rhyme>:</l>
        <l id="s4:l4" met="3" type="-+">Veel te meer om dat <rhyme label="c" type="m">ick</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Selfs voele mijne <rhyme label="b" type="f" corresp="#s4:l3">vlecke</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Daerom heb ick wat <rhyme label="c" type="m" corresp="#s4:l4">schrick</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Nochtans met Hester <rhyme label="a" type="m">al</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Ick u toe komen <rhyme label="a" type="m" corresp="#s5:l1">sal</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Op u <rhyme label="b" type="f">barmhertighede</rhyme>:</l>
        <l id="s5:l4" met="3" type="-+">Verhoope dat gy <rhyme label="c" type="m">sult</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Laten dalen in <rhyme label="b" type="f" corresp="#s5:l3">vrede</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">U Scepter heel <rhyme label="c" type="m" corresp="#s5:l4">vergult</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Soo sal ick tot u <rhyme label="a" type="m">gaen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Grijpen de spitse <rhyme label="a" type="m" corresp="#s6:l1">aen</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Van u groote <rhyme label="b" type="f">genade</rhyme>:</l>
        <l id="s6:l4" met="3" type="-+">Die my een steunsel <rhyme label="c" type="m">is</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Een beschutting voor 't <rhyme label="b" type="f" corresp="#s6:l3">quade</rhyme>:</l>
        <l id="s6:l6" met="3" type="-+">Dat ick niet en sla <rhyme label="c" type="m" corresp="#s6:l4">mis</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Gy hebt my <rhyme label="a" type="m">toe-geseyt</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Al in <rhyme label="a" type="m" corresp="#s7:l1">gerechtigheyt</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">U aen my te <rhyme label="b" type="f">verloven</rhyme>:</l>
        <l id="s7:l4" met="3" type="-+">En ick beloofde <rhyme label="c" type="m">mee</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">U te dienen daer <rhyme label="b" type="f" corresp="#s7:l3">boven</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">In heyligheyt en <rhyme label="c" type="m" corresp="#s7:l4">vree</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Wy zijn nu bey te <rhyme label="a" type="m">gaer</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Verbonden, dat is <rhyme label="a" type="m" corresp="#s8:l1">waer</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Al door een stercke <rhyme label="b" type="f">reden</rhyme>:</l>
        <l id="s8:l4" met="3" type="-+">Dat ick nu niet en <rhyme label="c" type="m">mag</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Mijn beloft <rhyme label="b" type="f" corresp="#s8:l3">overtreden</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Tot in den laetsten <rhyme label="c" type="m" corresp="#s8:l4">dag</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Ick moet my wachten <rhyme label="a" type="m">wel</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Van vreemde Minnaers <rhyme label="a" type="m" corresp="#s9:l1">fel</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Die my schoone <rhyme label="b" type="f">bepraten</rhyme>:</l>
        <l id="s9:l4" met="3" type="-+">Of ick u wild' <rhyme label="c" type="m">af-gaen</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">En wederom <rhyme label="b" type="f" corresp="#s9:l3">verlaten</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">En haer dan nemen <rhyme label="c" type="m" corresp="#s9:l4">aen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Maer ick proeve haer <rhyme label="a" type="m">eest</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Of uyt u is den <rhyme label="a" type="m" corresp="#s10:l1">geest</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Soo word' ick niet <rhyme label="b" type="f">bedrogen</rhyme>:</l>
        <l id="s10:l4" met="3" type="-+">Gelijck Moeder <rhyme label="c" type="m">Eva</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Voor des Serpents <rhyme label="b" type="f" corresp="#s10:l3">logen</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Quam sy in groote <rhyme label="c" type="m" corresp="#s10:l4">scha</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Daerom is 't dat ick <rhyme label="a" type="m">hart</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">In grooter pijn en <rhyme label="a" type="m" corresp="#s11:l1">smart</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Nu angstelijck moet <rhyme label="b" type="f">baren</rhyme>:</l>
        <l id="s11:l4" met="3" type="-+">Hopende dat gy <rhyme label="c" type="m">sult</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">My wel trouw'lijck <rhyme label="b" type="f" corresp="#s11:l3">bewaren</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Tot den tijdt is <rhyme label="c" type="m" corresp="#s11:l4">vervult</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Soo lang ick hier sal <rhyme label="a" type="m">zijn</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">En heb ick niet dan <rhyme label="a" type="m" corresp="#s12:l1">pijn</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">En veel drucks te <rhyme label="b" type="f">verwachten</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Daerom verlang ick <rhyme label="c" type="m">seer</rhyme></l>
        <l id="s12:l5" met="3" type="-+">By daeg, ende by <rhyme label="b" type="f" corresp="#s12:l3">nachten</rhyme></l>
        <l id="s12:l6" met="3" type="-+">Naer uwe komst', mijn <rhyme label="c" type="m" corresp="#s12:l4">Heer</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Geeft my sterckheydt en <rhyme label="a" type="m">kracht</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Dat ick op mijnder <rhyme label="a" type="m" corresp="#s13:l1">wacht</rhyme></l>
        <l id="s13:l3" met="3" type="-+">Gestadig mochte <rhyme label="b" type="f">blijven</rhyme>;</l>
        <l id="s13:l4" met="3" type="-+">Tot dat ick u <rhyme label="c" type="m">gerucht</rhyme>,</l>
        <l id="s13:l5" met="3" type="-+">Om u vyandt te <rhyme label="b" type="f" corresp="#s13:l3">verdrijven</rhyme>,</l>
        <l id="s13:l6" met="3" type="-+">Sal hooren in de <rhyme label="c" type="m" corresp="#s13:l4">lucht</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Ick Piinces, u <rhyme label="a" type="m">vriendin</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Roepe met hert en <rhyme label="a" type="m" corresp="#s14:l1">sin</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Tot u met groot <rhyme label="b" type="f">verlangen</rhyme>:</l>
        <l id="s14:l4" met="3" type="-+">Om in u <rhyme label="c" type="m">Heerlijckheydt</rhyme></l>
        <l id="s14:l5" met="3" type="-+">Te werden <rhyme label="b" type="f" corresp="#s14:l3">ontfangen</rhyme>,</l>
        <l id="s14:l6" met="3" type="-+">Die my nu is <rhyme label="c" type="m" corresp="#s14:l4">bereydt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

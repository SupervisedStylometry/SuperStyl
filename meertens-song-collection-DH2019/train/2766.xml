    <melody>Iets moet ik u Laura vragen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Bernardus Busschoff</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">GY die moede zielen <rhyme label="a" type="f">stercket</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Nieuwe Lichaems krachten <rhyme label="a" type="f" corresp="#s1:l1">wercket</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Alst de zwacke Mensch <rhyme label="b" type="m">behoeft</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Die uyt vaderlijck <rhyme label="c" type="f">meed'doogen</rhyme></l>
        <l id="s1:l5" met="4" type="+-">Boven krachten en <rhyme label="c" type="f" corresp="#s1:l4">vermogen</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Noyt u Kind'ren hebt <rhyme label="b" type="m" corresp="#s1:l3">beproeft</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Die gesond' en siecke <rhyme label="a" type="f">dagen</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Geeft en neemt naer u <rhyme label="a" type="f" corresp="#s2:l1">behagen</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Hebt my hier geworpen <rhyme label="b" type="m">neer</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Op het Sieck-bedd' vol van <rhyme label="c" type="f">smerte</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Maer aen u wel meend' <rhyme label="c" type="f" corresp="#s2:l4">herte</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Wil ick twijf'len <rhyme label="b" type="m" corresp="#s2:l3">nimmermeer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Gy kondt wonden en weer <rhyme label="a" type="f">heelen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Gy kondt geess'len en weer <rhyme label="a" type="f" corresp="#s3:l1">streelen</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Leyden in en uyt de <rhyme label="b" type="m">Hel</rhyme>:</l>
        <l id="s3:l4" met="4" type="+-">Haestelijck een Mensch te <rhyme label="c" type="f">dooden</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Haest te helpen uyt 's doods <rhyme label="c" type="f" corresp="#s3:l4">nooden</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Kondt gy Heer al <rhyme label="b" type="m" corresp="#s3:l3">even-wel</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Dese sieckt', daer ick meed' <rhyme label="a" type="f">woele</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Dese smert die ick <rhyme label="a" type="f" corresp="#s4:l1">gevoele</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Heeft uw' handt my <rhyme label="b" type="m">opgeleydt</rhyme>:</l>
        <l id="s4:l4" met="4" type="+-">Nu gy kendt u eygen <rhyme label="c" type="f">slagen</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">En gy weet wat ick kan <rhyme label="c" type="f" corresp="#s4:l4">dragen</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Toont dan uw' <rhyme label="b" type="m" corresp="#s4:l3">getrouwigheydt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Ick omhels en kus uw <rhyme label="a" type="f">roede</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Die my maeckt de sonde <rhyme label="a" type="f" corresp="#s5:l1">moede</rhyme>:</l>
        <l id="s5:l3" met="4" type="+-">Maer ick bidd' u als een <rhyme label="b" type="m">kindt</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Dat hem gaerne laet <rhyme label="c" type="f">kastijden</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Sendt my toe een lijd'lijck <rhyme label="c" type="f" corresp="#s5:l4">lijden</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Toont dat my u hert <rhyme label="b" type="m" corresp="#s5:l3">bemindt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">d' Uytkomst van dees' sieckt' en <rhyme label="a" type="f">quale</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Die beveel ick <rhyme label="a" type="f" corresp="#s6:l1">altemale</rhyme>.</l>
        <l id="s6:l3" met="4" type="+-">Uwen wil en wijsen <rhyme label="b" type="m">raet</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Sonder prevelen of <rhyme label="c" type="f">prangen</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Wil ick blijdelijc <rhyme label="c" type="f" corresp="#s6:l4">ontfangen</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Wat gy my toekomen <rhyme label="b" type="m" corresp="#s6:l3">laet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">'k Weet dat gy my sult <rhyme label="a" type="f">toe-senden</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Dat gy 't seeckerlijck sult <rhyme label="a" type="f" corresp="#s7:l1">wenden</rhyme></l>
        <l id="s7:l3" met="4" type="+-">tot mijn best en <rhyme label="b" type="m">saligheydt</rhyme>:</l>
        <l id="s7:l4" met="4" type="+-">Daerom wil ick <rhyme label="c" type="f">onbekommert</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Met de Wereldt <rhyme label="c" type="f" corresp="#s7:l4">onbeslommert</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Sien op u <rhyme label="b" type="m" corresp="#s7:l3">voorsienigheydt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Soo ghy Heer, my noch wilt <rhyme label="a" type="f">sparen</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Tot mijn Vaders niet <rhyme label="a" type="f" corresp="#s8:l1">vergaren</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Door dees' sieckt', die my nu <rhyme label="b" type="m">druckt</rhyme>;</l>
        <l id="s8:l4" met="4" type="+-">Laet uw zegen dan <rhyme label="c" type="f">verschijnen</rhyme></l>
        <l id="s8:l5" met="4" type="+-">Over 't werck der <rhyme label="c" type="f" corresp="#s8:l4">Medecijnen</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Geeft dat alles wel <rhyme label="b" type="m" corresp="#s8:l3">geluckt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Als gy maer een woordt wilt <rhyme label="a" type="f">spreecken</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Al mijn smerten en <rhyme label="a" type="f" corresp="#s9:l1">gebreecken</rhyme></l>
        <l id="s9:l3" met="4" type="+-">Sullen my verlaten <rhyme label="b" type="m">ras</rhyme>:</l>
        <l id="s9:l4" met="4" type="+-">Daet'lijck sal ick zijn <rhyme label="c" type="f">genesen</rhyme>,</l>
        <l id="s9:l5" met="4" type="+-">Ja soo frisch en wacker <rhyme label="c" type="f" corresp="#s9:l4">wesen</rhyme></l>
        <l id="s9:l6" met="4" type="+-">Als ick oyt mijn leven <rhyme label="b" type="m" corresp="#s9:l3">was</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Soo gy my dat wilt <rhyme label="a" type="f">verleenen</rhyme>,</l>
        <l id="s10:l2" met="4" type="+-">Soo verleent my doch met <rhyme label="a" type="f" corresp="#s10:l1">eenen</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Dat ick voorts niet eenen <rhyme label="b" type="m">dach</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">Als tot uwen dienst <rhyme label="c" type="f">bestede</rhyme>:</l>
        <l id="s10:l5" met="4" type="+-">Geeft my dat ick 't doe <rhyme label="c" type="f" corresp="#s10:l4">al-rede</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">En van nu beginnen <rhyme label="b" type="m" corresp="#s10:l3">mach</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Hebt gy oock Heer <rhyme label="a" type="f">voor-genomen</rhyme>,</l>
        <l id="s11:l2" met="4" type="+-">Dat ick niet weer op sal <rhyme label="a" type="f" corresp="#s11:l1">komen</rhyme>,</l>
        <l id="s11:l3" met="4" type="+-">Maer den wegh der wereldt <rhyme label="b" type="m">gaen</rhyme>,</l>
        <l id="s11:l4" met="4" type="+-">'t Staet alleen aen u <rhyme label="c" type="f">gebieden</rhyme>,</l>
        <l id="s11:l5" met="4" type="+-">Wat gy wilt dat moet <rhyme label="c" type="f" corresp="#s11:l4">geschieden</rhyme>,</l>
        <l id="s11:l6" met="4" type="+-">Wat gy doet, is wel <rhyme label="b" type="m" corresp="#s11:l3">gedaen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Ick ben willigh wel te <rhyme label="a" type="f">vreden</rhyme>,</l>
        <l id="s12:l2" met="4" type="+-">Uyt dit tranen-dal te <rhyme label="a" type="f" corresp="#s12:l1">treden</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">'k Ben dit arme leven <rhyme label="b" type="m">sat</rhyme>,</l>
        <l id="s12:l4" met="4" type="+-">Moed' van tobben en van <rhyme label="c" type="f">sloven</rhyme>,</l>
        <l id="s12:l5" met="4" type="+-">Och! of ick al-reed' daer <rhyme label="c" type="f" corresp="#s12:l4">boven</rhyme></l>
        <l id="s12:l6" met="4" type="+-">In des Hemels ruste <rhyme label="b" type="m" corresp="#s12:l3">sat</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Wilt my derwaers Heer <rhyme label="a" type="f">geleyden</rhyme>,</l>
        <l id="s13:l2" met="4" type="+-">Geeft my een genadigh <rhyme label="a" type="f" corresp="#s13:l1">scheyden</rhyme>,</l>
        <l id="s13:l3" met="4" type="+-">Sterckt mijn kleyn en zwack <rhyme label="b" type="m">geloof</rhyme>:</l>
        <l id="s13:l4" met="4" type="+-">Neemt mijn ziel in uw <rhyme label="c" type="f">handen</rhyme>,</l>
        <l id="s13:l5" met="4" type="+-">Die gy uyt des Satans <rhyme label="c" type="f" corresp="#s13:l4">tanden</rhyme>,</l>
        <l id="s13:l6" met="4" type="+-">Hebt getoogen als een <rhyme label="b" type="m" corresp="#s13:l3">roof</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">'k Sie de diepte van mijn <rhyme label="a" type="f">sonden</rhyme>,</l>
        <l id="s14:l2" met="4" type="+-">Die ick peylen kan noch <rhyme label="a" type="f" corresp="#s14:l1">gronden</rhyme>,</l>
        <l id="s14:l3" met="4" type="+-">Die mijn hert voor u <rhyme label="b" type="m">beschreyt</rhyme>:</l>
        <l id="s14:l4" met="4" type="+-">Maer ick sie oock op de <rhyme label="c" type="f">wonden</rhyme></l>
        <l id="s14:l5" met="4" type="+-">Uwes Soons, die t' allen <rhyme label="c" type="f" corresp="#s14:l4">stonden</rhyme></l>
        <l id="s14:l6" met="4" type="+-">Vloeyen van <rhyme label="b" type="m" corresp="#s14:l3">bermhertigheydt</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="+-">Laet sijn wonden op my <rhyme label="a" type="f">vloeyen</rhyme>,</l>
        <l id="s15:l2" met="4" type="+-">Laet sijn bloedt my heel <rhyme label="a" type="f" corresp="#s15:l1">besproeyen</rhyme>,</l>
        <l id="s15:l3" met="4" type="+-">Over Ziel en Lichaem <rhyme label="b" type="m">gaen</rhyme>:</l>
        <l id="s15:l4" met="4" type="+-">Soo sal ick in uw' <rhyme label="c" type="f">gesichte</rhyme>,</l>
        <l id="s15:l5" met="4" type="+-">Op den dagh van 't streng' <rhyme label="c" type="f" corresp="#s15:l4">gerichte</rhyme>,</l>
        <l id="s15:l6" met="4" type="+-">Sonder smet en vlecke <rhyme label="b" type="m" corresp="#s15:l3">staen</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="+-">'k Hebb' mijn hert nu <rhyme label="a" type="f">uyt-gegoten</rhyme>,</l>
        <l id="s16:l2" met="4" type="+-">Ziel en all' geheel <rhyme label="a" type="f" corresp="#s16:l1">ontslooten</rhyme>,</l>
        <l id="s16:l3" met="4" type="+-">Voorts gedenck ick met <rhyme label="b" type="m">gedult</rhyme>,</l>
        <l id="s16:l4" met="4" type="+-">Ondersteunt door uwe <rhyme label="c" type="f">krachten</rhyme>,</l>
        <l id="s16:l5" met="4" type="+-">Stil in hoope af te <rhyme label="c" type="f" corresp="#s16:l4">wachten</rhyme></l>
        <l id="s16:l6" met="4" type="+-">d' Uyt-komst, die gy geven <rhyme label="b" type="m" corresp="#s16:l3">sult</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>22711</id>
    <date>
      <year-start>1576</year-start>
      <year-end>1582</year-end>
    </date>
    <tags>
      <tag standard-name="vermaanlied" translation="admonitory song">vermaanlied</tag>
    </tags>
    <melody>De winter is vergangen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>David Joris</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Hoort alle ghy <rhyme label="a" type="f">Nacomelinghen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Vanden eersten Mensch <rhyme label="b" type="m">Adam</rhyme>:</l>
        <l id="s1:l3" met="3" type="-+">Sijn aert quaet orbaer om <rhyme label="a" type="f" corresp="#s1:l1">singhen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Wat deur sijn vemoghen <rhyme label="b" type="m" corresp="#s1:l2">quam</rhyme>:</l>
        <l id="s1:l5" met="3" type="-+">Onsen Vader dat eerst <rhyme label="b" type="m" corresp="#s1:l2">vernam</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Waer deur hy bedroghen <rhyme label="c" type="m">was</rhyme>:</l>
        <l id="s1:l7" met="3" type="-+">Sijn eyghen vleysch boven hem <rhyme label="b" type="m" corresp="#s1:l2">klam</rhyme>,</l>
        <l id="s1:l8" met="1" type="-+">Tooch hem van Gode <rhyme label="c" type="m" corresp="#s1:l6">geras</rhyme>:</l>
        <l id="s1:l9" met="3" type="-+">So Ick <rhyme label="c" type="m" corresp="#s1:l6">las</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">Unde goet t'onthouden <rhyme label="d" type="m">is</rhyme>,</l>
        <l id="s1:l11" met="3" type="+-">So broos als eenich <rhyme label="c" type="m" corresp="#s1:l6">glas</rhyme>,</l>
        <l id="s1:l12" met="4" type="-+">Op geen vleysch te betrouwen <rhyme label="d" type="m" corresp="#s1:l10">is</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ghemaeckt was hy van <rhyme label="a" type="f">Aerde</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Unde aertsch was hy <rhyme label="b" type="m">ghesint</rhyme>:</l>
        <l id="s2:l3" met="3" type="-+">Want kleyn hielt hy van <rhyme label="a" type="f" corresp="#s2:l1">waerde</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Dat Ghebot van Gode <rhyme label="b" type="m" corresp="#s2:l2">bemint</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">Mit sienden ooghen <rhyme label="b" type="m" corresp="#s2:l2">blint</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Doende des Wyves <rhyme label="c" type="m">raet</rhyme>:</l>
        <l id="s2:l7" met="3" type="-+">Waer duer wy sijn <rhyme label="b" type="m" corresp="#s2:l2">gheschint</rhyme>,</l>
        <l id="s2:l8" met="1" type="-+">Wt der natueren <rhyme label="c" type="m" corresp="#s2:l6">quaet</rhyme>:</l>
        <l id="s2:l9" met="3" type="-+">Ja <rhyme label="c" type="m" corresp="#s2:l6">quaet</rhyme>,</l>
        <l id="s2:l10" met="3" type="-+">Soo noch t'aenschouwen <rhyme label="d" type="m">is</rhyme>,</l>
        <l id="s2:l11" met="3" type="+-">Dus seg ick u dat ghijt <rhyme label="c" type="m" corresp="#s2:l6">verstaet</rhyme>,</l>
        <l id="s2:l12" met="4" type="-+">Op gheen vleysch te betrouwen <rhyme label="d" type="m" corresp="#s2:l10">is</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Alle vleysch werdt't hoy <rhyme label="a" type="f">verghelijckt</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Merckt wel aen sijn <rhyme label="b" type="m">virtuyt</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Synen glansch u te haest <rhyme label="a" type="f" corresp="#s3:l1">beswijckt</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Vergaet als een ander <rhyme label="b" type="m" corresp="#s3:l2">cruyt</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">Al schijntet als een <rhyme label="b" type="m" corresp="#s3:l2">Bruyt</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Schoon van buyten op te <rhyme label="c" type="m">gaen</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Sijn glorie gaet schielijck <rhyme label="b" type="m" corresp="#s3:l2">wt</rhyme>,</l>
        <l id="s3:l8" met="1" type="-+">Op een ander ghedaente <rhyme label="c" type="m" corresp="#s3:l6">staen</rhyme>:</l>
        <l id="s3:l9" met="3" type="-+">Wilt <rhyme label="c" type="m" corresp="#s3:l6">raen</rhyme>,</l>
        <l id="s3:l10" met="3" type="-+">Of het wel ghespouwen <rhyme label="d" type="m">is</rhyme>:</l>
        <l id="s3:l11" met="3" type="+-">Die daer op rust wert <rhyme label="c" type="m" corresp="#s3:l6">verraen</rhyme>,</l>
        <l id="s3:l12" met="4" type="-+">Op gheen vleysch te betrouwen <rhyme label="d" type="m" corresp="#s3:l10">is</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Op u Naesten wilt niet <rhyme label="a" type="f">verlaten</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Noch op gheen Princen <rhyme label="b" type="m">betrout</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Of die in u arm slaept, wilt <rhyme label="a" type="f" corresp="#s4:l1">vaten</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Haer liefde seer haest <rhyme label="b" type="m" corresp="#s4:l2">vercout</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Die propheet verclaertet <rhyme label="b" type="m" corresp="#s4:l2">stout</rhyme>:</l>
        <l id="s4:l6" met="3" type="-+">T'is oock wel ghebleecken <rhyme label="c" type="m">klaer</rhyme>:</l>
        <l id="s4:l7" met="3" type="-+">Maer der op Christum <rhyme label="b" type="m" corresp="#s4:l2">bout</rhyme>,</l>
        <l id="s4:l8" met="1" type="-+">En seylt Ja niet een <rhyme label="c" type="m" corresp="#s4:l6">haer</rhyme>.</l>
        <l id="s4:l9" met="3" type="-+">T'is <rhyme label="c" type="m" corresp="#s4:l6">waer</rhyme>,</l>
        <l id="s4:l10" met="3" type="-+">Als die syne int benauwen <rhyme label="d" type="m">is</rhyme>,</l>
        <l id="s4:l11" met="3" type="+-">Kompt hy hem altijt bet <rhyme label="c" type="m" corresp="#s4:l6">naer</rhyme>,</l>
        <l id="s4:l12" met="4" type="-+">Op gheen vleysch te betrouwen <rhyme label="d" type="m" corresp="#s4:l10">is</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Soo ghy t'Beeldt van den eersten <rhyme label="a" type="f">Mensche</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Hebt langhe ghedraghen <rhyme label="b" type="m">bloot</rhyme>:</l>
        <l id="s5:l3" met="3" type="-+">Soo doet aen den Nieuwen naer <rhyme label="a" type="f" corresp="#s5:l1">wensche</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Vanden Gheest gheboren <rhyme label="b" type="m" corresp="#s5:l2">groot</rhyme>:</l>
        <l id="s5:l5" met="3" type="-+">Die daer wt des Vaders <rhyme label="b" type="m" corresp="#s5:l2">schoot</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Vanden Hooft-monde is <rhyme label="c" type="m">ghvloeyt</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Een eewich Woort, dat <rhyme label="b" type="m" corresp="#s5:l2">Broot</rhyme>,</l>
        <l id="s5:l8" met="1" type="-+">Vanden Hemel eewich <rhyme label="c" type="m" corresp="#s5:l6">ghegroeyt</rhyme>:</l>
        <l id="s5:l9" met="3" type="-+"><rhyme label="c" type="m" corresp="#s5:l6">Besnoeyt</rhyme>,</l>
        <l id="s5:l10" met="3" type="-+">Meerder dan van Vrouwen <rhyme label="d" type="m">is</rhyme>,</l>
        <l id="s5:l11" met="3" type="+-">Het Gheloove reyn nu <rhyme label="c" type="m" corresp="#s5:l6">bloeyt</rhyme>,</l>
        <l id="s5:l12" met="4" type="-+">Op gheen vleysch te betrouwen <rhyme label="d" type="m" corresp="#s5:l10">is</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Die Prince wilt wel <rhyme label="a" type="f">aenmercken</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Dattet recht in sijn <rhyme label="b" type="m">verstandt</rhyme>:</l>
        <l id="s6:l3" met="3" type="-+">Ongheleerden unde alle <rhyme label="a" type="f" corresp="#s6:l1">Clercken</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Mit alle Wysen int <rhyme label="b" type="m" corresp="#s6:l2">Landt</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Steeckt wt, snijdt af u <rhyme label="b" type="m" corresp="#s6:l2">handt</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Die u argert van Gode <rhyme label="c" type="m">treckt</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Dat ghy daer mit niet en <rhyme label="b" type="m" corresp="#s6:l2">verbrandt</rhyme>,</l>
        <l id="s6:l8" met="1" type="-+">Eewich inder Hellen <rhyme label="c" type="m" corresp="#s6:l6">leckt</rhyme>,</l>
        <l id="s6:l9" met="3" type="-+"><rhyme label="c" type="m" corresp="#s6:l6">Gestreckt</rhyme>,</l>
        <l id="s6:l10" met="3" type="-+">Wacht of't sal u rouwen <rhyme label="d" type="m">wis</rhyme>,</l>
        <l id="s6:l11" met="3" type="+-">Uwen Gheest holden <rhyme label="c" type="m" corresp="#s6:l6">bevleckt</rhyme>,</l>
        <l id="s6:l12" met="4" type="-+">Op gheen vleysch te betrouwen <rhyme label="d" type="m" corresp="#s6:l10">is</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

      <category translation="narratives">verhalen</category>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Rumoldus Batavus</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Salomon heeft <rhyme label="a" type="f">ghesonghen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Een alsoo zoeten <rhyme label="b" type="m">liedt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Met alsoo vieriger <rhyme label="a" type="f" corresp="#s1:l1">tonghen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Datmen op Maria <rhyme label="b" type="m" corresp="#s1:l2">bediet</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Op die berghen coemt sy <rhyme label="c" type="f">springhen</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Aldus gaet Salomon <rhyme label="c" type="f" corresp="#s1:l5">singhen</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Siet hoe zy ouerdie heuuelen <rhyme label="b" type="m" corresp="#s1:l2">vliet</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Oock comt Lucas ons <rhyme label="a" type="f">beschreuen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">In zijn eerste Capittel <rhyme label="b" type="m">zaen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Dat dit Gods moeder ginck <rhyme label="a" type="f" corresp="#s2:l1">bedrieuen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Want t’sy is op <rhyme label="b" type="m" corresp="#s2:l2">ghestaen</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Metter haest door groot <rhyme label="c" type="f">verlanghen</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Is sy ouer t’gheberchte <rhyme label="c" type="f" corresp="#s2:l5">gheganghen</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Tot haer Nichte Elizabeth <rhyme label="b" type="m" corresp="#s2:l2">saen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Dese dede eerweerdelijck <rhyme label="a" type="f">groeten</rhyme></l>
        <l id="s3:l2" met="3" type="-+">O liefelijcke <rhyme label="b" type="m">woort</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Dat alle bitterheyt can <rhyme label="a" type="f" corresp="#s3:l1">soeten</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Als Elizabeth dat heeft <rhyme label="b" type="m" corresp="#s3:l2">gehoort</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Haer Soon Ioannes <rhyme label="c" type="f">ionghen</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Is van vreuchden op <rhyme label="c" type="f" corresp="#s3:l5">ghespronghen</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Binnen haer lichaem rechte <rhyme label="b" type="m" corresp="#s3:l2">voort</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Syn Heer heeft hy <rhyme label="a" type="f">bewesen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Reuerentie ende <rhyme label="b" type="m">eer</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Wie heeft oyt sulckx <rhyme label="a" type="f" corresp="#s4:l1">ghelesen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Nu oft oock <rhyme label="b" type="m" corresp="#s4:l2">immermeer</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Elizabeth worde <rhyme label="c" type="f">ontsteecken</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Door den H. Gheest zy ginck <rhyme label="c" type="f" corresp="#s4:l5">spreecken</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Van Marta, en onsen <rhyme label="b" type="m" corresp="#s4:l2">Heer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Ghebenedijt zijt ghy onder die <rhyme label="a" type="f">vrouwen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">En gebenedijt soo is v <rhyme label="b" type="m">vrucht</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Och coemt ghy my <rhyme label="a" type="f" corresp="#s5:l1">aenschouwen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Dit en had ick niet <rhyme label="b" type="m" corresp="#s5:l2">gheducht</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Dat die Moeder mijns <rhyme label="c" type="f">Herten</rhyme></l>
        <l id="s5:l6" met="3" type="-+">My dus soudt comen <rhyme label="c" type="f" corresp="#s5:l5">visiteren</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Wel te recht ben ick <rhyme label="b" type="m" corresp="#s5:l2">verhuecht</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Elizabeth wilt toch <rhyme label="a" type="f">hooren</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Sprack voorts eerbaer, en <rhyme label="b" type="m">bequaem</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Als v groete quam in mijn <rhyme label="a" type="f" corresp="#s6:l1">ooren</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Spranck het kint op in mijn <rhyme label="b" type="m" corresp="#s6:l2">lichaem</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Hierom en wilt niet <rhyme label="c" type="f">treuren</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Alle dinc zal v <rhyme label="c" type="f" corresp="#s6:l5">ghebueren</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Want ghy hebt ghelooft nae <rhyme label="b" type="m" corresp="#s6:l2">betaem</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Marta ghinck doen <rhyme label="a" type="f">voeghen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Mijn ziele maeckt groot den <rhyme label="b" type="m">Heer</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Mijn gheest doet hem <rhyme label="a" type="f" corresp="#s7:l1">verhueghen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">In Godt mijn salichmaecker <rhyme label="b" type="m" corresp="#s7:l2">voorweer</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Hy sach aen die <rhyme label="c" type="f">ootmoedicheden</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Van zijn Dienstmaecht hier <rhyme label="c" type="f" corresp="#s7:l5">beneden</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Salich zullen zy my noemen van <rhyme label="b" type="m" corresp="#s7:l2">veer</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Waer zijt ghy hooueerdighe <rhyme label="a" type="f">vrouwen</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Die v laet dienen op uwen <rhyme label="b" type="m">pas</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Wilt Marta exempel <rhyme label="a" type="f" corresp="#s8:l1">aenschouwen</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Die van Godt vercosen <rhyme label="b" type="m" corresp="#s8:l2">was</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Om zijne Moeder te <rhyme label="c" type="f">wesen</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Nochtans noemt zy by <rhyme label="c" type="f" corresp="#s8:l5">desen</rhyme></l>
        <l id="s8:l7" met="3" type="-+">Haer een dienst-Maeghet <rhyme label="b" type="m" corresp="#s8:l2">ras</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Hebt nu in v <rhyme label="a" type="f">ghedachten</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Haer groote <rhyme label="b" type="m">ootmoedicheyt</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Die met neersticheyt ginck <rhyme label="a" type="f" corresp="#s9:l1">trachten</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Nae simpele <rhyme label="b" type="m" corresp="#s9:l2">Dienstbaerheyt</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Wilt O maechden, als Maria <rhyme label="c" type="f">dienen</rhyme></l>
        <l id="s9:l6" met="3" type="-+">O Vroukens wilt den armen herberch <rhyme label="c" type="f" corresp="#s9:l5">verlienen</rhyme></l>
        <l id="s9:l7" met="3" type="-+">Op dat v den hemel mach zijn <rhyme label="b" type="m" corresp="#s9:l2">bereyt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

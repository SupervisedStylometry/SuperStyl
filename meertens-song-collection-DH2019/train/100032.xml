  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="5" type="-+">GOddin ghy die beheerst mijn gantsche <rhyme label="a" type="f">leven</rhyme>,</l>
        <l id="s1:l2" met="5" type="-+">Goddin ghy kent voor smert mijn blijdschap <rhyme label="a" type="f" corresp="#s1:l1">geven</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">VVaerom dan <rhyme label="b" type="m">pijn</rhyme>?</l>
        <l id="s1:l4" met="2" type="-+">VVaerom dan <rhyme label="b" type="m" corresp="#s1:l3">pijn</rhyme>?</l>
        <l id="s1:l5" met="2" type="-+">VVaerom dan <rhyme label="b" type="m" corresp="#s1:l3">pijn</rhyme>?</l>
        <l id="s1:l6" met="3" type="-+">Vol doodelijck <rhyme label="b" type="m" corresp="#s1:l3">fenijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="5" type="-+">Ghy toont mijn wel u Hair en glinster <rhyme label="a" type="f">loncken</rhyme>,</l>
        <l id="s2:l2" met="5" type="-+">Maer hout u vriendelijckheyt voor mijn <rhyme label="a" type="f" corresp="#s2:l1">verdroncken</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">V stralent <rhyme label="b" type="m">licht</rhyme></l>
        <l id="s2:l4" met="2" type="-+">Meer vlammen <rhyme label="b" type="m" corresp="#s2:l3">sticht</rhyme>:</l>
        <l id="s2:l5" met="2" type="-+">V stralent <rhyme label="b" type="m" corresp="#s2:l3">licht</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Steets met mijn Geesjen <rhyme label="b" type="m" corresp="#s2:l3">vicht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="5" type="-+">Voogdes wanneer ick gae ter plaets om <rhyme label="a" type="f">rusten</rhyme></l>
        <l id="s3:l2" met="5" type="-+">Noyt kan mijn droeve Geest door droom <rhyme label="a" type="f" corresp="#s3:l1">verlusten</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Maer schrey en <rhyme label="b" type="m">waeck</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">Vol pijn en <rhyme label="b" type="m" corresp="#s3:l3">vaeck</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Maer schrey en <rhyme label="b" type="m" corresp="#s3:l3">waeck</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Is dit dan u <rhyme label="b" type="m" corresp="#s3:l3">vermaeck</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="5" type="-+">Soo komt dan Wreede komt en wilt mijn <rhyme label="a" type="f">rucken</rhyme>,</l>
        <l id="s4:l2" met="5" type="-+">En scheyrt dit droevigh lijf aen hondert <rhyme label="a" type="f" corresp="#s4:l1">stucken</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">'k En vrees geen <rhyme label="b" type="m">Doot</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">Noch Garons <rhyme label="b" type="m" corresp="#s4:l3">Boot</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Maer 'k roep de <rhyme label="b" type="m" corresp="#s4:l3">Doot</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Tot eynde van de <rhyme label="b" type="m" corresp="#s4:l3">noot</rhyme>.</l>
      </lg>
    </lg>
  </text>

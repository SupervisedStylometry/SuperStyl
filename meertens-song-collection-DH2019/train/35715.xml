    <melody>Des morgens voor dag in het veld al bij de weg</melody>
    <categories>
      <category translation="seasons and annual events">jaarkring</category>
    </categories>
  <author>Albertus Buitendyck</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">Door zijnen <rhyme label="a" type="m">doodt</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Heeft de doodts macht <rhyme label="b" type="f">verslagen</rhyme>;</l>
        <l id="s1:l3" met="2" type="-+">Lijden, noch <rhyme label="a" type="m" corresp="#s1:l1">noot</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Noch doodt zal hem meer <rhyme label="b" type="f" corresp="#s1:l2">plagen</rhyme>.</l>
        <l id="s1:l5" met="2" type="-+">Satans <rhyme label="c" type="m">gewelt</rhyme></l>
        <l id="s1:l6" met="2" type="-+">Heeft <rhyme label="c" type="m" corresp="#s1:l5">neer-gevelt</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Heeft neer, heeft neer, heeft neer <rhyme label="c" type="m" corresp="#s1:l5">gevelt</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">En aen een bant <rhyme label="c" type="m" corresp="#s1:l5">gestelt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">'t Onnoosel <rhyme label="a" type="m">Lam</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Heeft versoent sijnen <rhyme label="b" type="f">Vader</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Verstoort en <rhyme label="a" type="m" corresp="#s2:l1">gram</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Tegens ons <rhyme label="b" type="f" corresp="#s2:l2">allegader</rhyme>.</l>
        <l id="s2:l5" met="2" type="-+">'t Graf blijft in 't <rhyme label="c" type="m">slot</rhyme>;</l>
        <l id="s2:l6" met="2" type="-+">Hy mensch en <rhyme label="c" type="m" corresp="#s2:l5">Godt</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Hy mensch, hy mensch, hy mensch en <rhyme label="c" type="m" corresp="#s2:l5">Godt</rhyme></l>
        <l id="s2:l8" met="4" type="-+">Verrijst tot ons groot <rhyme label="c" type="m" corresp="#s2:l5">lot</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Adams <rhyme label="a" type="m">geslacht</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Dat Godts gebodt <rhyme label="b" type="f">vertreden</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Tot val <rhyme label="a" type="m" corresp="#s3:l1">gebracht</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Heeft hy geneze <rhyme label="b" type="f" corresp="#s3:l2">heden</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Dees <rhyme label="c" type="m">Pellicaen</rhyme></l>
        <l id="s3:l6" met="2" type="-+">Heeft 's hemels <rhyme label="c" type="m" corresp="#s3:l5">baen</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Heeft 'she, heeft 'she, heeft 'shemels <rhyme label="c" type="m" corresp="#s3:l5">baen</rhyme></l>
        <l id="s3:l8" met="4" type="-+">Voor ons open <rhyme label="c" type="m" corresp="#s3:l5">gedaen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Soo <rhyme label="a" type="m">MagdalÃªen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Als ander twee <rhyme label="b" type="f">Maryen</rhyme></l>
        <l id="s4:l3" met="2" type="-+">Nae 't graf vroegh <rhyme label="a" type="m" corresp="#s4:l1">treen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Met waerde <rhyme label="b" type="f" corresp="#s4:l2">speceryen</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">'t Was haer <rhyme label="c" type="m">begeer</rhyme></l>
        <l id="s4:l6" met="2" type="-+">Om Godt haer <rhyme label="c" type="m" corresp="#s4:l5">Heer</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Om Godt, om Godt, om Godt haer <rhyme label="c" type="m" corresp="#s4:l5">Heer</rhyme></l>
        <l id="s4:l8" met="4" type="-+">Te salven tot sijn <rhyme label="c" type="m" corresp="#s4:l5">eer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Gekleedt in 't <rhyme label="a" type="m">wit</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Een Engel zien met <rhyme label="b" type="f">vresen</rhyme>,</l>
        <l id="s5:l3" met="2" type="-+">Die seyt haer <rhyme label="a" type="m" corresp="#s5:l1">dit</rhyme>:</l>
        <l id="s5:l4" met="3" type="-+">Vreest niet, d' Heer is <rhyme label="b" type="f" corresp="#s5:l2">verresen</rhyme>;</l>
        <l id="s5:l5" met="2" type="-+">d'Apost'len <rhyme label="c" type="m">doet</rhyme></l>
        <l id="s5:l6" met="2" type="-+">Dees boodtschap <rhyme label="c" type="m" corresp="#s5:l5">soet</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Dees boodts, dees boodts, dees bootschap <rhyme label="c" type="m" corresp="#s5:l5">soet</rhyme>,</l>
        <l id="s5:l8" met="4" type="-+">Petrus dit weete <rhyme label="c" type="m" corresp="#s5:l5">moet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">S' hebben 't <rhyme label="a" type="m">voldaen</rhyme>.</l>
        <l id="s6:l2" met="3" type="-+">Petrus en Sint Jan <rhyme label="b" type="f">loopen</rhyme></l>
        <l id="s6:l3" met="2" type="-+">Terstonden <rhyme label="a" type="m" corresp="#s6:l1">aen</rhyme>;</l>
        <l id="s6:l4" met="3" type="-+">Sy vinden 't graf heel <rhyme label="b" type="f" corresp="#s6:l2">open</rhyme>.</l>
        <l id="s6:l5" met="2" type="-+">Christus doodts <rhyme label="c" type="m">kle'en</rhyme></l>
        <l id="s6:l6" met="2" type="-+">Soos' in 't graf <rhyme label="c" type="m" corresp="#s6:l5">treen</rhyme></l>
        <l id="s6:l7" met="4" type="-+">Soos'in, soos'in, soos'in 't graf <rhyme label="c" type="m" corresp="#s6:l5">treen</rhyme></l>
        <l id="s6:l8" met="4" type="-+">Sien gewentelt by <rhyme label="c" type="m" corresp="#s6:l5">een</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="2" type="-+">Als <rhyme label="a" type="m">Cleophas</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Op Paesch-dagh met een <rhyme label="b" type="f">trede</rhyme></l>
        <l id="s7:l3" met="2" type="-+">Na Emaus <rhyme label="a" type="m" corresp="#s7:l1">ras</rhyme>;</l>
        <l id="s7:l4" met="3" type="-+">Christus komt by haer <rhyme label="b" type="f" corresp="#s7:l2">mede</rhyme>:</l>
        <l id="s7:l5" met="2" type="-+">Een Pelgrim <rhyme label="c" type="m">scheen</rhyme></l>
        <l id="s7:l6" met="2" type="-+">Draeght na haer <rhyme label="c" type="m" corresp="#s7:l5">re'en</rhyme></l>
        <l id="s7:l7" met="4" type="-+">Vraeght na, vraeght na, vraeght na haer <rhyme label="c" type="m" corresp="#s7:l5">re'en</rhyme></l>
        <l id="s7:l8" met="4" type="-+">De waerheyt vroom <rhyme label="c" type="m" corresp="#s7:l5">bele'en</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="2" type="-+">Haer <rhyme label="a" type="m">onderwijst</rhyme>.</l>
        <l id="s8:l2" met="3" type="-+">Met sijn vleysch ende <rhyme label="b" type="f">bloede</rhyme></l>
        <l id="s8:l3" met="2" type="-+">Haer beyde <rhyme label="a" type="m" corresp="#s8:l1">spijst</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Met een gedaente <rhyme label="b" type="f" corresp="#s8:l2">voeden</rhyme>.</l>
        <l id="s8:l5" met="2" type="-+">D'Apost'len <rhyme label="c" type="m">mee</rhyme></l>
        <l id="s8:l6" met="2" type="-+">Die zien hem <rhyme label="c" type="m" corresp="#s8:l5">dree</rhyme>.</l>
        <l id="s8:l7" met="4" type="-+">Die zien, die zien, die zien hem <rhyme label="c" type="m" corresp="#s8:l5">dree</rhyme>,</l>
        <l id="s8:l8" met="4" type="-+">Hy wenscht haer peys en <rhyme label="c" type="m" corresp="#s8:l5">vree</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="2" type="-+">O Jesu! <rhyme label="a" type="m">rijck</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Wilt heden aen ons <rhyme label="b" type="f">geven</rhyme>:</l>
        <l id="s9:l3" met="2" type="-+">Dat <rhyme label="a" type="m" corresp="#s9:l1">geestelijck</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Verresen wy heel <rhyme label="b" type="f" corresp="#s9:l2">leven</rhyme>.</l>
        <l id="s9:l5" met="2" type="-+">Bewaert ons <rhyme label="c" type="m">al</rhyme></l>
        <l id="s9:l6" met="2" type="-+">Van zonden <rhyme label="c" type="m" corresp="#s9:l5">val</rhyme></l>
        <l id="s9:l7" met="4" type="-+">Van zond, van zond, van zonden <rhyme label="c" type="m" corresp="#s9:l5">val</rhyme>,</l>
        <l id="s9:l8" met="4" type="-+">Yder u loven <rhyme label="c" type="m" corresp="#s9:l5">zal</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

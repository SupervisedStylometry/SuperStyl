  <author>Guillaume Abrahams Ooijevaer</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Aensiet de Kindtsheydt inden <rhyme label="a" type="m">Mensch</rhyme>:</l>
        <l id="s1:l2" met="4" type="-+">Aensiet de Ionckheydt daer <rhyme label="b" type="f">beneven</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Men kan 't niet al hebben nae <rhyme label="a" type="m" corresp="#s1:l1">wensch</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Men moet de Kindtsheydt wat <rhyme label="b" type="f" corresp="#s1:l2">toegheven</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">En de Ionckheydt in haer jonck <rhyme label="b" type="f" corresp="#s1:l2">leven</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">En dencken datmen is <rhyme label="c" type="m">gheweest</rhyme></l>
        <l id="s1:l7" met="4" type="-+">Een Kindt, dat eertijdts wierdt <rhyme label="b" type="f" corresp="#s1:l2">ghedreven</rhyme></l>
        <l id="s1:l8" met="4" type="-+">Van eenen Kinderlijcken <rhyme label="c" type="m" corresp="#s1:l6">gheest</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Kinderen gaen kinderen <rhyme label="a" type="m">gangh</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">En doen veel Kinderlijcke <rhyme label="b" type="f">dinghen</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Men moetse houden in <rhyme label="a" type="m" corresp="#s2:l1">bedwangh</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Maer niet ghelijck als <rhyme label="b" type="f" corresp="#s2:l2">Tuchtelinghen</rhyme>:</l>
        <l id="s2:l5" met="4" type="-+">Want men siet vaeck aen stucken <rhyme label="b" type="f" corresp="#s2:l2">springhen</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Den Boogh, als men die <rhyme label="c" type="m">overspant</rhyme>;</l>
        <l id="s2:l7" met="4" type="-+">Wil men de Ieught te nauw <rhyme label="b" type="f" corresp="#s2:l2">bedwinghen</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">Soo springhen sy oock uyt den <rhyme label="c" type="m" corresp="#s2:l6">bandt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Het Ionck is vrolijck in sijn <rhyme label="a" type="m">tijdt</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">En speelt geern op des Heeren <rhyme label="b" type="f">straten</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Al ist een werck van kleyn <rhyme label="a" type="m" corresp="#s3:l1">profijt</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Men moet haer al wat speelen <rhyme label="b" type="f" corresp="#s3:l2">laten</rhyme>:</l>
        <l id="s3:l5" met="4" type="-+">Want sy zijn ghelijck de <rhyme label="b" type="f" corresp="#s3:l2">Wijn-vaten</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Die, als mense te nauw <rhyme label="c" type="m">besluyt</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Ewn gheen lucht gheeft voor <rhyme label="b" type="f" corresp="#s3:l2">Kelder-gaten</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">De Wijnen laten loopen <rhyme label="c" type="m" corresp="#s3:l6">uyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Paulus, des Heeren Knecht <rhyme label="a" type="m">bemindt</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Die veel Wijsheydt hadd' te <rhyme label="b" type="f">bewaren</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Die seght dat hy deed' als een <rhyme label="a" type="m" corresp="#s4:l1">Kindt</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Doe hy een Kindt was, jonck van <rhyme label="b" type="f" corresp="#s4:l2">jaren</rhyme>:</l>
        <l id="s4:l5" met="4" type="-+">Maer doe hem Godt quam weder <rhyme label="b" type="f" corresp="#s4:l2">baren</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">En dat hy kreegh een Mans <rhyme label="c" type="m">verstandt</rhyme>:</l>
        <l id="s4:l7" met="4" type="-+">Doe liet hy alle Kindtsheydt <rhyme label="b" type="f" corresp="#s4:l2">varen</rhyme>,</l>
        <l id="s4:l8" met="4" type="-+">En heeft de gulden Roos <rhyme label="c" type="m" corresp="#s4:l6">gheplant</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Den Tijdt die brenght de Roosen <rhyme label="a" type="m">voort</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">En doet de Bloem te Saron <rhyme label="b" type="f">bloeyen</rhyme></l>
        <l id="s5:l3" met="4" type="-+">In ons, door de <rhyme label="a" type="m" corresp="#s5:l1">wedergheboort'</rhyme>:</l>
        <l id="s5:l4" met="4" type="-+">Den Tijdt doet Melck-fonteyntjens <rhyme label="b" type="f" corresp="#s5:l2">vloeyen</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">By Geyten, Schapen, en by <rhyme label="b" type="f" corresp="#s5:l2">Koeyen</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">In de Gras-rijcke <rhyme label="c" type="m">Weyden-groen</rhyme>:</l>
        <l id="s5:l7" met="4" type="-+">Den Tijdt doet alle Vruchten <rhyme label="b" type="f" corresp="#s5:l2">groeyen</rhyme>,</l>
        <l id="s5:l8" met="4" type="-+">Die de Menschen hebben van <rhyme label="c" type="m" corresp="#s5:l6">doen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Den Tijdt die moet men nemen <rhyme label="a" type="m">waer</rhyme>.</l>
        <l id="s6:l2" met="4" type="-+">Om in te Ooghsten alle <rhyme label="b" type="f">Vruchten</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Daer mede Godt bekroont het <rhyme label="a" type="m" corresp="#s6:l1">Iaer</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Door aenghename <rhyme label="b" type="f" corresp="#s6:l2">Somers-luchten</rhyme>:</l>
        <l id="s6:l5" met="4" type="-+">Want den Tijdt gaet haest henen <rhyme label="b" type="f" corresp="#s6:l2">vluchten</rhyme>:</l>
        <l id="s6:l6" met="4" type="-+">Daerom, die Tijdt gheen Tijdt en <rhyme label="c" type="m">acht</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Die brenght de Tijdt in zwaer <rhyme label="b" type="f" corresp="#s6:l2">versuchten</rhyme>,</l>
        <l id="s6:l8" met="4" type="-+">Als sy onnut is <rhyme label="c" type="m" corresp="#s6:l6">doorghebracht</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Men moet wat doen, om <rhyme label="a" type="m">Tijdtverdrijf</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Hoordt men de Luyden somtijts <rhyme label="b" type="f">spreecken</rhyme>:</l>
        <l id="s7:l3" met="4" type="-+">Maer het sal menigh Man en <rhyme label="a" type="m" corresp="#s7:l1">Wijf</rhyme></l>
        <l id="s7:l4" met="4" type="-+">In 't eynde noch aen Tijdt <rhyme label="b" type="f" corresp="#s7:l2">ghebreecken</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Wanneer haer Lenten is <rhyme label="b" type="f" corresp="#s7:l2">verstreecken</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">En datse zijn Deughts Somer <rhyme label="c" type="m">quijt</rhyme>:</l>
        <l id="s7:l7" met="4" type="-+">Dan is de kans deerlijck <rhyme label="b" type="f" corresp="#s7:l2">verkeecken</rhyme>,</l>
        <l id="s7:l8" met="4" type="-+">Want nae dees Tijdt en is gheen <rhyme label="c" type="m" corresp="#s7:l6">Tijdt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Dan wordt dan Mensch bekommert <rhyme label="a" type="m">seer</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">In sijn Ghewisse, of <rhyme label="b" type="f">Gheweten</rhyme>;</l>
        <l id="s8:l3" met="4" type="-+">Dan wenstmen te verhalen <rhyme label="a" type="m" corresp="#s8:l1">weer</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Den Tijdt, die onnut is <rhyme label="b" type="f" corresp="#s8:l2">versleten</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Dan wordt hy jammerlijck <rhyme label="b" type="f" corresp="#s8:l2">ghebeten</rhyme></l>
        <l id="s8:l6" met="4" type="-+">Van sijn Schuldt-worm, die niet en <rhyme label="c" type="m">sterft</rhyme>:</l>
        <l id="s8:l7" met="4" type="-+">Dan is in de Yserschaer <rhyme label="b" type="f" corresp="#s8:l2">gheseten</rhyme></l>
        <l id="s8:l8" met="4" type="-+">Christus, die hem sijn Rijck <rhyme label="c" type="m" corresp="#s8:l6">onterft</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">De Tijden der <rhyme label="a" type="m">Onwetenheydt</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Oversiet Godt de Heer <rhyme label="b" type="f">ghepresen</rhyme>:</l>
        <l id="s9:l3" met="4" type="-+">Daerom heb ick in 't eerst <rhyme label="a" type="m" corresp="#s9:l1">gheseydt</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Aensiet de Kindtsheydt, en by <rhyme label="b" type="f" corresp="#s9:l2">desen</rhyme></l>
        <l id="s9:l5" met="4" type="-+">De Ionckheydt, in haer jeuchdigh <rhyme label="b" type="f" corresp="#s9:l2">wesen</rhyme>:</l>
        <l id="s9:l6" met="4" type="-+">Want sy en weten soo veel <rhyme label="c" type="m">niet</rhyme></l>
        <l id="s9:l7" met="4" type="-+">Als de oude Luyden <rhyme label="b" type="f" corresp="#s9:l2">belesen</rhyme>,</l>
        <l id="s9:l8" met="4" type="-+">Wiens Tijden Godt niet <rhyme label="c" type="m" corresp="#s9:l6">oversiet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

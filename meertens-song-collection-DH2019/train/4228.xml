<song>
  <meta>
    <id>4228</id>
    <date>
      <year-start>1649</year-start>
      <year-end>1649</year-end>
    </date>
    <location>
      <orginal-name>amsterdam</orginal-name>
      <standard-name>Amsterdam, The Netherlands</standard-name>
      <coordinates>
        <lon>52.3745403</lon>
        <lat>4.89797550561798</lat>
      </coordinates>
    </location>
    <tags/>
    <melody>Barst brakke traantjes uit</melody>
  <author>Jacob Steendam</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">OP Heldin, maakt u <rhyme label="a" type="m">op</rhyme>:</l>
        <l id="s1:l2" met="2" type="-+">Wild u <rhyme label="b" type="f">verçieren</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">En op-waarts <rhyme label="b" type="f" corresp="#s1:l2">swieren</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Na <rhyme label="a" type="m" corresp="#s1:l1">d'hoogste-top</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Van Pallas <rhyme label="c" type="m">schoon-paleys</rhyme>:</l>
        <l id="s1:l6" met="3" type="-+">Voldoet der geesten <rhyme label="c" type="m" corresp="#s1:l5">eys</rhyme>.</l>
        <l id="s1:l7" met="3" type="-+">Besnoeyd het <rhyme label="c" type="m" corresp="#s1:l5">dart'le-vleys</rhyme></l>
        <l id="s1:l8" met="1" type="-+">En <rhyme label="d" type="m">poogd</rhyme></l>
        <l id="s1:l9" met="3" type="-+">Na d'eer uw's <rhyme label="d" type="m" corresp="#s1:l8">Opper-voogd</rhyme>:</l>
        <l id="s1:l10" met="2" type="-+">Die 't al <rhyme label="d" type="m" corresp="#s1:l8">be-oogd</rhyme>,</l>
        <l id="s1:l11" met="2" type="+-">En <rhyme label="b" type="f" corresp="#s1:l2">(goedertieren</rhyme>)</l>
        <l id="s1:l12" met="2" type="-+">U heeft <rhyme label="d" type="m" corresp="#s1:l8">verhoogd</rhyme>.</l>
        <l id="s1:l13" met="2" type="-+">Die scheent <rhyme label="e" type="f">bedolven</rhyme></l>
        <l id="s1:l14" met="2" type="-+">Als in de <rhyme label="e" type="f" corresp="#s1:l13">golven</rhyme></l>
        <l id="s1:l15" met="4" type="-+">Van d' Oceaan, die nu <rhyme label="d" type="m" corresp="#s1:l8">verdroogd</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Op dat het Drie in <rhyme label="a" type="m">Een</rhyme></l>
        <l id="s2:l2" met="2" type="-+">
          <rhyme label="b" type="f">Goddelijk-wesen</rhyme>
        </l>
        <l id="s2:l3" met="2" type="-+">(Van u <rhyme label="b" type="f" corresp="#s2:l2">gepresen</rhyme>)</l>
        <l id="s2:l4" met="2" type="-+">Sie na <rhyme label="a" type="m" corresp="#s2:l1">beneên</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">En help ons <rhyme label="c" type="m">dap're-Prins</rhyme>:</l>
        <l id="s2:l6" met="3" type="-+">Gelijk hy (eertijds <rhyme label="c" type="m" corresp="#s2:l5">gins</rhyme>)</l>
        <l id="s2:l7" met="3" type="-+">Bood Iosua <rhyme label="c" type="m" corresp="#s2:l5">(alsins</rhyme>)</l>
        <l id="s2:l8" met="1" type="-+">
          <rhyme label="d" type="m">By-stand</rhyme>
        </l>
        <l id="s2:l9" met="3" type="-+">In 't lang <rhyme label="d" type="m" corresp="#s2:l8">beloofde-Land</rhyme>:</l>
        <l id="s2:l10" met="2" type="-+">Die sijn <rhyme label="d" type="m" corresp="#s2:l8">Vyand</rhyme></l>
        <l id="s2:l11" met="2" type="+-">(Vol schrik) dee <rhyme label="b" type="f" corresp="#s2:l2">vresen</rhyme></l>
        <l id="s2:l12" met="2" type="-+">Des Heeren <rhyme label="d" type="m" corresp="#s2:l8">hand</rhyme>:</l>
        <l id="s2:l13" met="2" type="-+">Die 's <rhyme label="e" type="f">Hemels-lichten</rhyme></l>
        <l id="s2:l14" met="2" type="-+">Heeft boven <rhyme label="e" type="f" corresp="#s2:l13">plichten</rhyme></l>
        <l id="s2:l15" met="4" type="-+">(Als machtig) tegen haar <rhyme label="d" type="m" corresp="#s2:l8">gekant</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Tot dat hy (streng, en <rhyme label="a" type="m">straf</rhyme>)</l>
        <l id="s3:l2" met="2" type="-+">Sich had <rhyme label="b" type="f">gewroken</rhyme>:</l>
        <l id="s3:l3" met="2" type="-+">En 't Staal <rhyme label="b" type="f" corresp="#s3:l2">gebroken</rhyme></l>
        <l id="s3:l4" met="2" type="-+">Sijn's Vyands <rhyme label="a" type="m" corresp="#s3:l1">staf</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Die moedig tot hem <rhyme label="c" type="m">quam</rhyme>:</l>
        <l id="s3:l6" met="3" type="-+">Wiens woningen hy <rhyme label="c" type="m" corresp="#s3:l5">nam</rhyme>:</l>
        <l id="s3:l7" met="3" type="-+">En stichten daar een <rhyme label="c" type="m" corresp="#s3:l5">vlam</rhyme></l>
        <l id="s3:l8" met="1" type="-+">Ter <rhyme label="d" type="m">plaats</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Van dees' verbannen <rhyme label="d" type="m" corresp="#s3:l8">Maats</rhyme>:</l>
        <l id="s3:l10" met="2" type="-+">Door weynig <rhyme label="d" type="m" corresp="#s3:l8">raads</rhyme></l>
        <l id="s3:l11" met="2" type="+-">By haar <rhyme label="b" type="f" corresp="#s3:l2">besproken</rhyme>:</l>
        <l id="s3:l12" met="2" type="-+">(Maar vry wat <rhyme label="d" type="m" corresp="#s3:l8">quaads</rhyme>)</l>
        <l id="s3:l13" met="2" type="-+">Zijn sy <rhyme label="e" type="f">uyt-sinnig</rhyme>:</l>
        <l id="s3:l14" met="2" type="-+">Als hy haar <rhyme label="e" type="f" corresp="#s3:l13">(vinnig</rhyme>)</l>
        <l id="s3:l15" met="4" type="-+">Toe-brengt dees' onverwachte <rhyme label="d" type="m" corresp="#s3:l8">kaats</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">On-eyndelijke <rhyme label="a" type="m">God</rhyme>:</l>
        <l id="s4:l2" met="2" type="-+">Sonder <rhyme label="b" type="f">begind'sel</rhyme>:</l>
        <l id="s4:l3" met="2" type="-+">U <rhyme label="b" type="f" corresp="#s4:l2">onder-wind'sel</rhyme></l>
        <l id="s4:l4" met="2" type="-+">Is (als 't <rhyme label="a" type="m" corresp="#s4:l1">Gebod</rhyme>)</l>
        <l id="s4:l5" met="3" type="-+">Geheel volmaakt: en <rhyme label="c" type="m">goed</rhyme>:</l>
        <l id="s4:l6" met="3" type="-+">Die wat gy wild ook <rhyme label="c" type="m" corresp="#s4:l5">doet</rhyme>:</l>
        <l id="s4:l7" met="3" type="-+">En schift het suur van 't <rhyme label="c" type="m" corresp="#s4:l5">soet</rhyme>,</l>
        <l id="s4:l8" met="1" type="-+">En <rhyme label="d" type="m">scheyd</rhyme></l>
        <l id="s4:l9" met="3" type="-+">Het licht van <rhyme label="d" type="m" corresp="#s4:l8">duysterheyt</rhyme>.</l>
        <l id="s4:l10" met="2" type="-+">Voor wien men <rhyme label="d" type="m" corresp="#s4:l8">pleyt</rhyme>.</l>
        <l id="s4:l11" met="2" type="+-">En wiens <rhyme label="b" type="f" corresp="#s4:l2">verblndsel</rhyme></l>
        <l id="s4:l12" met="2" type="-+">(So David <rhyme label="d" type="m" corresp="#s4:l8">seyd</rhyme>)</l>
        <l id="s4:l13" met="2" type="-+">Is vast en <rhyme label="e" type="f">bondig</rhyme></l>
        <l id="s4:l14" met="2" type="-+">Met ons: die <rhyme label="e" type="f" corresp="#s4:l13">sondig</rhyme>)</l>
        <l id="s4:l15" met="4" type="-+">Zijn over 't Aardrijk <rhyme label="d" type="m" corresp="#s4:l8">uyt-gespreyd</rhyme>;</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">God Vader, Soon, en <rhyme label="a" type="m">Geest</rhyme>:</l>
        <l id="s5:l2" met="2" type="-+">Wiens anschijn <rhyme label="b" type="f">heylig</rhyme></l>
        <l id="s5:l3" met="2" type="-+">Is, immer <rhyme label="b" type="f" corresp="#s5:l2">veylig</rhyme></l>
        <l id="s5:l4" met="2" type="-+">Voor minst, en <rhyme label="a" type="m" corresp="#s5:l1">meest</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Die uwe grote <rhyme label="c" type="m">naam</rhyme></l>
        <l id="s5:l6" met="3" type="-+">(Ootmoedig en <rhyme label="c" type="m" corresp="#s5:l5">bequaam</rhyme>)</l>
        <l id="s5:l7" met="3" type="-+">Au-roepen <rhyme label="c" type="m" corresp="#s5:l5">al-te-saam</rhyme>.</l>
        <l id="s5:l8" met="1" type="-+">Dies <rhyme label="d" type="m">wy</rhyme></l>
        <l id="s5:l9" met="3" type="-+">U bidden: staat ons <rhyme label="d" type="m" corresp="#s5:l8">by</rhyme>.</l>
        <l id="s5:l10" met="2" type="-+">U goedheyt <rhyme label="d" type="m" corresp="#s5:l8">(vry</rhyme>)</l>
        <l id="s5:l11" met="2" type="+-">Is nimmer <rhyme label="b" type="f" corresp="#s5:l2">peylig</rhyme>:</l>
        <l id="s5:l12" met="2" type="-+">Daar-om hoord <rhyme label="d" type="m" corresp="#s5:l8">my</rhyme>:</l>
        <l id="s5:l13" met="2" type="-+">En Helpt (Heer <rhyme label="e" type="f">goedig</rhyme>)</l>
        <l id="s5:l14" met="2" type="-+">Ons Prins <rhyme label="e" type="f" corresp="#s5:l13">voor-spoedig</rhyme>:</l>
        <l id="s5:l15" met="4" type="-+">Dat Iosua sijn voor-spel <rhyme label="d" type="m" corresp="#s5:l8">zy</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

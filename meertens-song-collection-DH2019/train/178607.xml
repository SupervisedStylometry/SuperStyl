  <author>François Halma</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">HOe veel vyanden, <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Bereiden 't <rhyme label="a" type="m" corresp="#s1:l1">moordgeweer</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Om uwen knecht te <rhyme label="b" type="f">vellen</rhyme> ?</l>
        <l id="s1:l4" met="3" type="-+">Hoe groot is 't booze <rhyme label="c" type="m">rot</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Dat met mijn lijden <rhyme label="c" type="m" corresp="#s1:l4">spot</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">En mijne ziel komt <rhyme label="b" type="f" corresp="#s1:l3">quellen</rhyme> ?</l>
        <l id="s1:l7" met="3" type="-+">Ik hoor een <rhyme label="d" type="m">smaadgeroep</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Uit deeze <rhyme label="d" type="m" corresp="#s1:l7">vyandstroep</rhyme></l>
        <l id="s1:l9" met="3" type="-+">Losbarsten, dat Godts <rhyme label="e" type="f">trouwe</rhyme></l>
        <l id="s1:l10" met="3" type="-+">En heil mijn ziel <rhyme label="f" type="m">ontbreekt</rhyme>,</l>
        <l id="s1:l11" met="3" type="+-">My van de kroon <rhyme label="f" type="m" corresp="#s1:l10">versteekt</rhyme>,</l>
        <l id="s1:l12" met="3" type="-+">Opdat hy 't muitryk <rhyme label="e" type="f" corresp="#s1:l9">bouwe</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Doch, Heer, gy zyt een <rhyme label="a" type="m">schild</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Die my bedekt; en <rhyme label="a" type="m" corresp="#s2:l1">wilt</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Myne eer zyn en mijn <rhyme label="b" type="f">Koning</rhyme>:</l>
        <l id="s2:l4" met="3" type="-+">Die my het hoofd <rhyme label="c" type="m">opheft</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Zoodat geen pyl my <rhyme label="c" type="m" corresp="#s2:l4">treft</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Gesmeedt in 's vyands <rhyme label="b" type="f" corresp="#s2:l3">woning</rhyme>.</l>
        <l id="s2:l7" met="3" type="-+">ik riep met mijne <rhyme label="d" type="m">stem</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Tot God: ô Heere, <rhyme label="d" type="m" corresp="#s2:l7">tem</rhyme></l>
        <l id="s2:l9" met="3" type="-+">Den muiter zoo <rhyme label="e" type="f">vermetel</rhyme>;</l>
        <l id="s2:l10" met="3" type="-+">De Heer, vol <rhyme label="f" type="m">heiligheit</rhyme>,</l>
        <l id="s2:l11" met="3" type="+-">Heeft my zijn hulp <rhyme label="f" type="m" corresp="#s2:l10">bereidt</rhyme></l>
        <l id="s2:l12" met="3" type="-+">Van zynen berg en <rhyme label="e" type="f" corresp="#s2:l9">zetel</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ik lei my toen ter <rhyme label="a" type="m">rust</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">En sliep, 'k verrees met <rhyme label="a" type="m" corresp="#s3:l1">lust</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Want 's Heeren <rhyme label="b" type="f">alvermogen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Is my een zuil en <rhyme label="c" type="m">stut</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Een burg die my <rhyme label="c" type="m" corresp="#s3:l4">beschut</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En moedigt uit den <rhyme label="b" type="f" corresp="#s3:l3">hoogen</rhyme>.</l>
        <l id="s3:l7" met="3" type="-+">Nu heb ik vrees noch <rhyme label="d" type="m">schrik</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Schoon 's vyands drommen, <rhyme label="d" type="m" corresp="#s3:l7">dik</rhyme></l>
        <l id="s3:l9" met="3" type="-+">Geschaart, my stout <rhyme label="e" type="f">omringen</rhyme>:</l>
        <l id="s3:l10" met="3" type="-+">Schoon duizenden <rhyme label="f" type="m">verwoet</rhyme>,</l>
        <l id="s3:l11" met="3" type="+-">Heet dorsten naar mijn <rhyme label="f" type="m" corresp="#s3:l10">bloet</rhyme>,</l>
        <l id="s3:l12" met="3" type="-+">Om my het ryk <rhyme label="e" type="f" corresp="#s3:l9">t'ontwringen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Sta op dan, Heer, mijn <rhyme label="a" type="m">rots</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En demp mijns vyands <rhyme label="a" type="m" corresp="#s4:l1">trots</rhyme>:</l>
        <l id="s4:l3" met="3" type="-+">Gy sloegt hem op de <rhyme label="b" type="f">kaken</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">En braakt zijn tanden <rhyme label="c" type="m">af</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">Zoo zag men 's hemels <rhyme label="c" type="m" corresp="#s4:l4">straf</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Der boozen koppen <rhyme label="b" type="f" corresp="#s4:l3">blaaken</rhyme>.</l>
        <l id="s4:l7" met="3" type="-+">Het heil is van den <rhyme label="d" type="m">Heer</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Wy zingen t'uwer <rhyme label="d" type="m" corresp="#s4:l7">eer</rhyme>:</l>
        <l id="s4:l9" met="3" type="-+">Dat uw genade en <rhyme label="e" type="f">zegen</rhyme></l>
        <l id="s4:l10" met="3" type="-+">'t Volk hoed van uwen <rhyme label="f" type="m">naam</rhyme>,</l>
        <l id="s4:l11" met="3" type="+-">Opdat zich altoos <rhyme label="f" type="m" corresp="#s4:l10">schaam'</rhyme></l>
        <l id="s4:l12" met="3" type="-+">Zyn vyand gansch <rhyme label="e" type="f" corresp="#s4:l9">verlegen</rhyme>.</l>
      </lg>
    </lg>

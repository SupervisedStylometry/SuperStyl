    <melody>Haar borstjes in haar boezem</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Hendrik Rintjes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Och Broeders al te <rhyme label="a" type="f">samen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">En Susters in den <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Ghy de draeght Christi <rhyme label="a" type="f" corresp="#s1:l1">namen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Voeght u doch nae sijn <rhyme label="b" type="m" corresp="#s1:l2">Leer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Laet uwe Lichten <rhyme label="a" type="f">lichten</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Al voor die menschen <rhyme label="b" type="m">klaer</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Wilt uwen naesten <rhyme label="a" type="f" corresp="#s2:l1">suchten</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Weest in ‘t gheloof <rhyme label="b" type="m" corresp="#s2:l2">vruchtbaer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Christus de Heer <rhyme label="a" type="f">ghepresen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Is onsen Herder <rhyme label="b" type="m">goet</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Wilt goede Schaepkens <rhyme label="a" type="f" corresp="#s3:l1">wesen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Al nae sijn stemme <rhyme label="b" type="m" corresp="#s3:l2">doet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Laet u van Christo <rhyme label="a" type="f">leeren</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Hy is ons Meester <rhyme label="b" type="m">reen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Wilt u voor hem <rhyme label="a" type="f" corresp="#s4:l1">verneeren</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">En hem volghen <rhyme label="b" type="m" corresp="#s4:l2">alleen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Wandelt op Christi <rhyme label="a" type="f">paden</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Die naer hem zijt <rhyme label="b" type="m">ghenoemt</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Die werelt wilt <rhyme label="a" type="f" corresp="#s5:l1">versmaden</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Anders u niet en <rhyme label="b" type="m" corresp="#s5:l2">roemt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Wort reyn en reynder <rhyme label="a" type="f">mede</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">In liefden goet <rhyme label="b" type="m">op-groeyt</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">So blijft ghy in Gods <rhyme label="a" type="f" corresp="#s6:l1">vrede</rhyme></l>
        <l id="s6:l4" met="3" type="-+">In alle deughden <rhyme label="b" type="m" corresp="#s6:l2">bloeyt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Weest ootmoedigh van <rhyme label="a" type="f">herten</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">En sachtmoedigh van <rhyme label="b" type="m">gheest</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Weest lijdtsaem in u <rhyme label="a" type="f" corresp="#s7:l1">smerten</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">In druck verduldigh <rhyme label="b" type="m" corresp="#s7:l2">meest</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Laet het u ghenoech <rhyme label="a" type="f">wesen</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Dat ghy ‘t voorleden <rhyme label="b" type="m">tijt</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">In zonden seer <rhyme label="a" type="f" corresp="#s8:l1">mispresen</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Versleten hebt <rhyme label="b" type="m" corresp="#s8:l2">subijt</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Den vleesche zijt <rhyme label="a" type="f">ghestorven</rhyme></l>
        <l id="s9:l2" met="3" type="-+">En de werelt met <rhyme label="b" type="m">een</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Door Christi kracht <rhyme label="a" type="f" corresp="#s9:l1">verworven</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Soo leyt een leven <rhyme label="b" type="m" corresp="#s9:l2">reen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Hebt liefd’ onder <rhyme label="a" type="f">malkand’ren</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Volbrenght Christus <rhyme label="b" type="m">ghebodt</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">In liefden so wilt <rhyme label="a" type="f" corresp="#s10:l1">wandelen</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">‘t Is u ghebodt van <rhyme label="b" type="m" corresp="#s10:l2">Godt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Laet vrede by u <rhyme label="a" type="f">bloeyen</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Vliet twist ende <rhyme label="b" type="m">tweedracht</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Wilt u tot deughden <rhyme label="a" type="f" corresp="#s11:l1">spoeyen</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Dient den Heere met <rhyme label="b" type="m" corresp="#s11:l2">macht</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Hebt Godt altijt voor <rhyme label="a" type="f">Ooghen</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Och Broeders alle <rhyme label="b" type="m">ghelijck</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Soo sal hy u <rhyme label="a" type="f" corresp="#s12:l1">verhooghen</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Hier boven in sijn <rhyme label="b" type="m" corresp="#s12:l2">rijck</rhyme></l>
      </lg>
    </lg>
  </text>
</song>

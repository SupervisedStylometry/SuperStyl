  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">VVEl aen springht op van <rhyme label="a" type="f">vreughden</rhyme></l>
        <l id="s1:l2" met="3" type="-+">En singht met blijden <rhyme label="b" type="m">thoon</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Sint Iosephs wonder <rhyme label="a" type="f" corresp="#s1:l1">deughden</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Hy is een goedt <rhyme label="b" type="m" corresp="#s1:l2">Patroon</rhyme></l>
        <l id="s1:l5" met="2" type="-+">Veel hy <rhyme label="c" type="m">vermagh</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Aen sijn Bruydt wt <rhyme label="d" type="f">ghelesen</rhyme></l>
        <l id="s1:l7" met="3" type="-+">En Christum hoogh <rhyme label="d" type="f" corresp="#s1:l6">ghepresen</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Die hy te dienen <rhyme label="c" type="m" corresp="#s1:l5">plagh</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Godt heeft hem van te <rhyme label="a" type="f">voren</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Wt alle Heylighen <rhyme label="b" type="m">sijn</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Tot dit groot ampt <rhyme label="a" type="f" corresp="#s2:l1">ghekoren</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Om Voester-heer te <rhyme label="b" type="m" corresp="#s2:l2">sijn</rhyme></l>
        <l id="s2:l5" met="2" type="-+">Van 't heyligh <rhyme label="c" type="m">Kindt</rhyme></l>
        <l id="s2:l6" met="3" type="-+">En van de Moeder <rhyme label="d" type="f">mede</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Die hy met <rhyme label="d" type="f" corresp="#s2:l6">suyverheden</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Altoos heeft seer <rhyme label="c" type="m" corresp="#s2:l5">bemindt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Reyn Maeght is hy <rhyme label="a" type="f">ghebleven</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Sijn ziel was <rhyme label="b" type="m">onbesmet</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Godtvruchtich daer <rhyme label="a" type="f" corresp="#s3:l1">beneven</rhyme></l>
        <l id="s3:l4" met="3" type="-+">En leefde naer de <rhyme label="b" type="m" corresp="#s3:l2">wet</rhyme>:</l>
        <l id="s3:l5" met="2" type="-+">Dus heeft hem <rhyme label="c" type="m">Godt</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Een Bruydegom vol <rhyme label="d" type="f">eeren</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Van de Moeder des <rhyme label="d" type="f" corresp="#s3:l6">Heeren</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Ghestelt, o saligh <rhyme label="c" type="m" corresp="#s3:l5">lodt</rhyme>!</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Veel ooghen der <rhyme label="a" type="f">Propheten</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Hebben verlangt te <rhyme label="b" type="m">sien</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Dien hy besorghden <rhyme label="a" type="f" corresp="#s4:l1">t'eten</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Als hy verre moet gaen <rhyme label="b" type="m" corresp="#s4:l2">vlien</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">O weerden <rhyme label="c" type="m">pant</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">O heylighen <rhyme label="d" type="f">bewaerder</rhyme></l>
        <l id="s4:l7" met="3" type="-+">O Patriarch veel <rhyme label="d" type="f" corresp="#s4:l6">claerder</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Dan oock den grootsten <rhyme label="c" type="m" corresp="#s4:l5">Sant</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Sijt ons een goede <rhyme label="a" type="f">berader</rhyme></l>
        <l id="s5:l2" met="3" type="-+">In allen onsen <rhyme label="b" type="m">noodt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">O Ioseph heyligh <rhyme label="a" type="f" corresp="#s5:l1">Vader</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Staet ons by in de <rhyme label="b" type="m" corresp="#s5:l2">doodt</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">Staet ons toch <rhyme label="c" type="m">by</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Als wy al moeten <rhyme label="d" type="f">sterven</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Om met u te <rhyme label="d" type="f" corresp="#s5:l6">be-erven</rhyme></l>
        <l id="s5:l8" met="3" type="-+">De vreught des Hemels <rhyme label="c" type="m" corresp="#s5:l5">blij</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">O Prince Godt <rhyme label="a" type="f">ghenadich</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Den loon der Heyligheyt <rhyme label="b" type="m">claer</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Iont ons dat wy <rhyme label="a" type="f" corresp="#s6:l1">ghestadigh</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Sint Ioseph volghen <rhyme label="b" type="m" corresp="#s6:l2">naer</rhyme>,</l>
        <l id="s6:l5" met="2" type="-+">Op dat wy <rhyme label="c" type="m">al</rhyme></l>
        <l id="s6:l6" met="3" type="-+">V met hem moghen <rhyme label="d" type="f">loven</rhyme>.</l>
        <l id="s6:l7" met="3" type="-+">Inden Hemel hier <rhyme label="d" type="f" corresp="#s6:l6">boven</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Naer dit traen vloedich <rhyme label="c" type="m" corresp="#s6:l5">dal</rhyme>.</l>
      </lg>
    </lg>
  </text>

    <melody>Kom schepper kom</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Justus de Harduwijn</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">COmt Schepper comt, <rhyme label="a" type="m">Heyligh-Gheest</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Comt end’ u zielen al <rhyme label="a" type="m" corresp="#s1:l1">aen-reest</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Comt en vervult met <rhyme label="b" type="m">Hemel-cracht</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Ons’ herten door u <rhyme label="b" type="m" corresp="#s1:l3">voort-ghebracht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Die den Vertrooster zijt <rhyme label="a" type="m">ghenoemt</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">En d’hooghste gave God’s <rhyme label="a" type="m" corresp="#s2:l1">gheroemt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Springh-ader, Vier, en <rhyme label="b" type="m">minne-gloed</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">En gheestelijcke Oly <rhyme label="b" type="m" corresp="#s2:l3">zoet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">U gaven zijn <rhyme label="a" type="m">zeven-der-hand</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">O Vingher Gods rechter <rhyme label="a" type="m" corresp="#s3:l1">hand</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">’S Vaders beloft’ die yeders <rhyme label="b" type="m">mondt</rhyme></l>
        <l id="s3:l4" met="4" type="-+">De reden-rijcke taele <rhyme label="b" type="m" corresp="#s3:l3">jondt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Onsteeckt ons zinnen aen u <rhyme label="a" type="m">licht</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Ons’ herten in u liefde <rhyme label="a" type="m" corresp="#s4:l1">sticht</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">De crancheydt van ons lichaem <rhyme label="b" type="m">broos</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Versterkende met deughd <rhyme label="b" type="m" corresp="#s4:l3">altoos</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Doet onsen Vyand van ons <rhyme label="a" type="m">vlien</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">En laet ons u ghenaed <rhyme label="a" type="m" corresp="#s5:l1">aensien</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Dat wy door u die vooren <rhyme label="b" type="m">gaet</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Soo moghen schouwen alle <rhyme label="b" type="m" corresp="#s5:l3">quaet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Door u den Vader sy <rhyme label="a" type="m">bekent</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Door u den Soon ons sy <rhyme label="a" type="m" corresp="#s6:l1">ontrent</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Door u sy condigh ons <rhyme label="b" type="m">altijt</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Dat ghy den Gheest van beyde <rhyme label="b" type="m" corresp="#s6:l3">zijt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Loff sy u Vader Heere <rhyme label="a" type="m">groot</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Loff Zoon verresen vande <rhyme label="a" type="m" corresp="#s7:l1">doot</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Loff  Heyligh-Gheest sy u <rhyme label="b" type="m">gheseydt</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Van nu tot inder <rhyme label="b" type="m" corresp="#s7:l3">eewigheydt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

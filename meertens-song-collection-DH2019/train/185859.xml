    <tags/>
    <melody>Geef mij te drinken naar mijn dorst</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Heer het is v wel <rhyme label="a" type="m">bekent</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Hoe dat daer nv zijn <rhyme label="b" type="f">opgeresen</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Nieuwe gesinden hier <rhyme label="a" type="m" corresp="#s1:l1">ontrent</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Die uwen naem schijnen te <rhyme label="b" type="f" corresp="#s1:l2">vresen</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Sy seggen: schout altijt by <rhyme label="b" type="f" corresp="#s1:l2">desen</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Dat het afgoderye <rhyme label="c" type="m">is</rhyme></l>
        <l id="s1:l7" met="4" type="-+">Dat wy v heyligen seer <rhyme label="d" type="f">gepresen</rhyme></l>
        <l id="s1:l8" met="4" type="-+">Eeren met eenige dienst <rhyme label="c" type="m" corresp="#s1:l6">gewis</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Sy brengen wt v <rhyme label="a" type="m">gebodt</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Als Christus seyt daer staet <rhyme label="b" type="f">geschreven</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Ghy sult aenbidden den Heer v <rhyme label="a" type="m" corresp="#s2:l1">God</rhyme></l>
        <l id="s2:l4" met="4" type="-+">En dienen hem alleen <rhyme label="b" type="f" corresp="#s2:l2">verheven</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Sy allegeeren hier <rhyme label="b" type="f" corresp="#s2:l2">beneven</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Die schriftuere van Paulo <rhyme label="c" type="m">seer</rhyme></l>
        <l id="s2:l7" met="4" type="-+">Daer Paulus seyt datmen sal <rhyme label="d" type="f">geven</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">Alleen den Heer glorie ende <rhyme label="c" type="m" corresp="#s2:l6">eer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Dit doen wy oock met herten <rhyme label="a" type="m">goet</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Mijn Godt wilt onse oordeel <rhyme label="b" type="f">wesen</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Eeren wy v niet met groot <rhyme label="a" type="m" corresp="#s3:l1">ootmoet</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Als onsen eenigen schepper <rhyme label="b" type="f" corresp="#s3:l2">gepresen</rhyme></l>
        <l id="s3:l5" met="4" type="-+">De alleen onse qualen heeft <rhyme label="b" type="f" corresp="#s3:l2">genesen</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Door zijnen Zone sonder <rhyme label="c" type="m">verdrach</rhyme></l>
        <l id="s3:l7" met="4" type="-+">Hier wt en ist nu niet <rhyme label="d" type="f">geresen</rhyme></l>
        <l id="s3:l8" met="4" type="-+">Als datmen niemant meer eeren en <rhyme label="c" type="m" corresp="#s3:l6">mach</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Want ghy o heer ons <rhyme label="a" type="m">gebiet</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Ghy sult u vader ende Moeder <rhyme label="b" type="f">eeren</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Vreest God en eert den Coninc <rhyme label="a" type="m" corresp="#s4:l1">siet</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Als Petrus leert sonder <rhyme label="b" type="f" corresp="#s4:l2">cesseren</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Hier me en machmen niet <rhyme label="b" type="f" corresp="#s4:l2">verneren</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Die Goddelijcke eere <rhyme label="c" type="m">vermaert</rhyme></l>
        <l id="s4:l7" met="4" type="-+">Als ons die Bybelsche schriften <rhyme label="d" type="f">leeren</rhyme></l>
        <l id="s4:l8" met="4" type="-+">De hier vervolgens worden <rhyme label="c" type="m" corresp="#s4:l6">verclaert</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Als de drie mannen wilt dit <rhyme label="a" type="m">verstaen</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Abraham in Mambre <rhyme label="b" type="f">openbaerden</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Doen heeft hy haer ghebeden <rhyme label="a" type="m" corresp="#s5:l1">aen</rhyme></l>
        <l id="s5:l4" met="4" type="-+">En hy viel neder opter <rhyme label="b" type="f" corresp="#s5:l2">aerden</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Als de twe Engelen Lot <rhyme label="b" type="f" corresp="#s5:l2">verclaerden</rhyme></l>
        <l id="s5:l6" met="4" type="-+">Dat Sodoma soude <rhyme label="c" type="m">vergaen</rhyme></l>
        <l id="s5:l7" met="4" type="-+">Doen viel hy neder opter <rhyme label="d" type="f">aerden</rhyme></l>
        <l id="s5:l8" met="4" type="-+">En heeftse oock gebeden <rhyme label="c" type="m" corresp="#s5:l6">aen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Doen Isaack zijn zoon <rhyme label="a" type="m">voorwaer</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Iacob Woude <rhyme label="b" type="f">gebenedijen</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Die lieden sullen v sprack hy <rhyme label="a" type="m" corresp="#s6:l1">daer</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Eeren aenbeden t’allen <rhyme label="b" type="f" corresp="#s6:l2">tijen</rhyme>.</l>
        <l id="s6:l5" met="4" type="-+">Als Ioseph met zo groot <rhyme label="b" type="f" corresp="#s6:l2">verblijen</rhyme></l>
        <l id="s6:l6" met="4" type="-+">In zijn Camer gecomen <rhyme label="c" type="m">was</rhyme></l>
        <l id="s6:l7" met="4" type="-+">Sijn broeders al sonder <rhyme label="d" type="f">vermijen</rhyme></l>
        <l id="s6:l8" met="4" type="-+">Aenbaden Ioseph op dat <rhyme label="c" type="m" corresp="#s6:l6">pas</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Iacob aenbaet ooc seven <rhyme label="a" type="m">mael</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Sijn Broeder Esau sonder <rhyme label="b" type="f">schroomen</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Neder ter aerden sonder <rhyme label="a" type="m" corresp="#s7:l1">fael</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Lya die is daer by <rhyme label="b" type="f" corresp="#s7:l2">gecomen</rhyme></l>
        <l id="s7:l5" met="4" type="-+">Al met haren kinderen <rhyme label="b" type="f" corresp="#s7:l2">wtghenomen</rhyme></l>
        <l id="s7:l6" met="4" type="-+">Ende aenbaden Esau <rhyme label="c" type="m">mee</rhyme></l>
        <l id="s7:l7" met="4" type="-+">Ioseph en Rachel met <rhyme label="d" type="f">bevromen</rhyme></l>
        <l id="s7:l8" met="4" type="-+">Aenbaden oock op deser <rhyme label="c" type="m" corresp="#s7:l6">ste</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Iuda mijn Sone hoort my <rhyme label="a" type="m">nu</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Sprack Iacob oock tot zijne <rhyme label="b" type="f">Sone</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Dijns Vaders sonen sullen <rhyme label="a" type="m" corresp="#s8:l1">v</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Loven aenbidden in <rhyme label="b" type="f" corresp="#s8:l2">persone</rhyme></l>
        <l id="s8:l5" met="4" type="-+">Wy lesen oock van Iosue <rhyme label="b" type="f" corresp="#s8:l2">coene</rhyme></l>
        <l id="s8:l6" met="4" type="-+">Wanneer als hy die Engel <rhyme label="c" type="m">sach</rhyme></l>
        <l id="s8:l7" met="4" type="-+">Doen bat hy aen die Engel <rhyme label="d" type="f">schone</rhyme></l>
        <l id="s8:l8" met="4" type="-+">Al daer hy neder ter aerden <rhyme label="c" type="m" corresp="#s8:l6">lach</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">David viel neder voor <rhyme label="a" type="m">Ionatas</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Op zijn aensicht verstaet mijn <rhyme label="b" type="f">reden</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Opter aerden al op dat <rhyme label="a" type="m" corresp="#s9:l1">pas</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Een heeft hem driemael <rhyme label="b" type="f" corresp="#s9:l2">aengebeden</rhyme></l>
        <l id="s9:l5" met="4" type="-+">Abigail die quam <rhyme label="b" type="f" corresp="#s9:l2">gereden</rhyme></l>
        <l id="s9:l6" met="4" type="-+">En David quam haer te <rhyme label="c" type="m">gemoet</rhyme></l>
        <l id="s9:l7" met="4" type="-+">Doen viel sy opter aerden <rhyme label="d" type="f">beneden</rhyme></l>
        <l id="s9:l8" met="4" type="-+">Ende aenbat hem metter <rhyme label="c" type="m" corresp="#s9:l6">spoet</rhyme></l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Saul die Coninck van <rhyme label="a" type="m">Israel</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Buychde hem neder mz <rhyme label="b" type="f">eerwaerden</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Ende aenbadt oock <rhyme label="a" type="m" corresp="#s10:l1">Samuel</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Met zijn aensicht neder ter <rhyme label="b" type="f" corresp="#s10:l2">aerden</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Als Miphyboeseth he <rhyme label="b" type="f" corresp="#s10:l2">t‘openbaerden</rhyme></l>
        <l id="s10:l6" met="4" type="-+">David heeft hem in genade <rhyme label="c" type="m">ontfaen</rhyme></l>
        <l id="s10:l7" met="4" type="-+">Doen viel hy neder op der <rhyme label="d" type="f">aerden</rhyme></l>
        <l id="s10:l8" met="4" type="-+">Ende badt den Coninck David <rhyme label="c" type="m" corresp="#s10:l6">aen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Getsabe die <rhyme label="a" type="m">Coningin</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Buychde haer neder met <rhyme label="b" type="f">begeren</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Aenbadt oock David verstaet den <rhyme label="a" type="m" corresp="#s11:l1">sin</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Dat Salomon mocht <rhyme label="b" type="f" corresp="#s11:l2">regeeren</rhyme></l>
        <l id="s11:l5" met="4" type="-+">Die Propheten kinderen met <rhyme label="b" type="f" corresp="#s11:l2">verneren</rhyme></l>
        <l id="s11:l6" met="4" type="-+">Ontmoeten Eliseus <rhyme label="c" type="m">daer</rhyme></l>
        <l id="s11:l7" met="4" type="-+">Sy buychden neder met grooter <rhyme label="d" type="f">eeren</rhyme></l>
        <l id="s11:l8" met="4" type="-+">Aenbaden Helisens <rhyme label="c" type="m" corresp="#s11:l6">voorwaer</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Ornam quam David te <rhyme label="a" type="m">ghemoet</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Vanden dorschvloer seer ras en <rhyme label="b" type="f">spoedich</rhyme></l>
        <l id="s12:l3" met="4" type="-+">Aenbat oock David met herten <rhyme label="a" type="m" corresp="#s12:l1">goet</rhyme></l>
        <l id="s12:l4" met="4" type="-+">Neder geboocht heel <rhyme label="b" type="f" corresp="#s12:l2">ootmoedich</rhyme></l>
        <l id="s12:l5" met="4" type="-+">Ick bid v broeders met herten <rhyme label="b" type="f" corresp="#s12:l2">goedich</rhyme></l>
        <l id="s12:l6" met="4" type="-+">Wilt dit altijt wel mercken <rhyme label="c" type="m">aen</rhyme></l>
        <l id="s12:l7" met="4" type="-+">Hoe dat die menschen seer <rhyme label="d" type="f">hoochmoedich</rhyme></l>
        <l id="s12:l8" met="4" type="-+">Al dese schriften laten <rhyme label="c" type="m" corresp="#s12:l6">staen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Ic bid v broeders wilt dit <rhyme label="a" type="m">verstaen</rhyme></l>
        <l id="s13:l2" met="4" type="-+">Hier mede wilt u laten <rhyme label="b" type="f">ghenoegen</rhyme></l>
        <l id="s13:l3" met="4" type="-+">En wilt de Heyligen oock bidden <rhyme label="a" type="m" corresp="#s13:l1">aen</rhyme></l>
        <l id="s13:l4" met="4" type="-+">Als u de heylige kercke set voor <rhyme label="b" type="f" corresp="#s13:l2">oogen</rhyme></l>
        <l id="s13:l5" met="4" type="-+">En leert die waerheyt <rhyme label="b" type="f" corresp="#s13:l2">onbedrogen</rhyme></l>
        <l id="s13:l6" met="4" type="-+">Oorlof mijn Broeders bidt voor <rhyme label="c" type="m">mijn</rhyme></l>
        <l id="s13:l7" met="4" type="-+">Wilt verstant onder haer <rhyme label="d" type="f">voegen</rhyme></l>
        <l id="s13:l8" met="4" type="-+">Soo zult ghy namaels blijde <rhyme label="c" type="m" corresp="#s13:l6">zijn</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <author>Albertus Buitendyck</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">LAet ons eendrachtigh <rhyme label="a" type="f">prijsen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Sint Paulus eerste <rhyme label="b" type="m">Maeght</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">En grooten eer <rhyme label="a" type="f" corresp="#s1:l1">bewijsen</rhyme>;</l>
        <l id="s1:l4" met="3" type="-+">Want dit Godt seer <rhyme label="b" type="m" corresp="#s1:l2">behaeght</rhyme>;</l>
        <l id="s1:l5" met="3" type="-+">Thecla is haren <rhyme label="c" type="m">naem</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Bekent door 's werelts <rhyme label="d" type="m">rondt</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Groot is haer eer, en <rhyme label="c" type="m" corresp="#s1:l5">faem</rhyme>:</l>
        <l id="s1:l8" met="3" type="-+">Aenhoort haer lof <rhyme label="d" type="m" corresp="#s1:l6">terstondt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Thecla in edel <rhyme label="a" type="f">Hove</rhyme></l>
        <l id="s2:l2" met="3" type="-+">T' Iconi is <rhyme label="b" type="m">gebaert</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Nochtans in 't <rhyme label="a" type="f" corresp="#s2:l1">ongelove</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Sint Paulus <rhyme label="b" type="m" corresp="#s2:l2">onvervaert</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Naest haer huys preeckt Godts <rhyme label="c" type="m">woordt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Met eenen luyde <rhyme label="d" type="m">stem</rhyme>:</l>
        <l id="s2:l7" met="3" type="-+">'t Huys Thecla dat klaer <rhyme label="c" type="m" corresp="#s2:l5">hoort</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Godts kennis krijght door <rhyme label="d" type="m" corresp="#s2:l6">hem</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Soo seer Godts woordt <rhyme label="a" type="f">beminden</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Als Paulus dat maer <rhyme label="b" type="m">preeckt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Op Solder men haer <rhyme label="a" type="f" corresp="#s3:l1">vinden</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">By 't venster haer oor <rhyme label="b" type="m" corresp="#s3:l2">steeckt</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Haer Moeder hierom <rhyme label="c" type="m">quaedt</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Wordt, ende haer seer <rhyme label="d" type="m">dreyght</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Van daer geensins wegh <rhyme label="c" type="m" corresp="#s3:l5">gaet</rhyme>;</l>
        <l id="s3:l8" met="3" type="-+">Sy was geen riet, noch <rhyme label="d" type="m" corresp="#s3:l6">neyght</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">In hare jonge <rhyme label="a" type="f">jaren</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Toont hare <rhyme label="b" type="m">vroomigheydt</rhyme>:</l>
        <l id="s4:l3" met="3" type="-+">Om Gods woordt laet sy <rhyme label="a" type="f" corresp="#s4:l1">varen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Spijs, dranck en <rhyme label="b" type="m" corresp="#s4:l2">ydelheydt</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Gods woordt oock niet <rhyme label="c" type="m">verlaet</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Om haer Vryer <rhyme label="d" type="m">Thamier</rhyme>.</l>
        <l id="s4:l7" met="3" type="-+">Die haer seer hooge <rhyme label="c" type="m" corresp="#s4:l5">staet</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Belooft: of dreyght met <rhyme label="d" type="m" corresp="#s4:l6">vyer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Paulus men hierom <rhyme label="a" type="f">vangen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">En werpen in een <rhyme label="b" type="m">kot</rhyme>:</l>
        <l id="s5:l3" met="3" type="-+">Thecla wenst met <rhyme label="a" type="f" corresp="#s5:l1">verlangen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">t' Lijden met hem voor <rhyme label="b" type="m" corresp="#s5:l2">Godt</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Sy komt by hem <rhyme label="c" type="m">aen-merckt</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Haer Schatten hierom <rhyme label="d" type="m">geeft</rhyme>:</l>
        <l id="s5:l7" met="3" type="-+">s' Hoort hem, noch sy <rhyme label="c" type="m" corresp="#s5:l5">versterckt</rhyme>;</l>
        <l id="s5:l8" met="3" type="-+">Voor niemant vreest of <rhyme label="d" type="m" corresp="#s5:l6">beeft</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Metter daedt nu <rhyme label="a" type="f">verfoeyden</rhyme></l>
        <l id="s6:l2" met="3" type="-+">d'Afgodt, en 't <rhyme label="b" type="m">Heydens-dom</rhyme>;</l>
        <l id="s6:l3" met="3" type="-+">En oock, dat haer noyt <rhyme label="a" type="f" corresp="#s6:l1">moeyden</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Thamier haer <rhyme label="b" type="m" corresp="#s6:l2">Bruydegom</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Neemt aen ons Roomsch <rhyme label="c" type="m">Geloof</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">En suyverheydts waerde <rhyme label="d" type="m">pandt</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Al acht men haer een <rhyme label="c" type="m" corresp="#s6:l5">sloof</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Sy rekent 't niet tot <rhyme label="d" type="m" corresp="#s6:l6">schandt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Tot de brandt is <rhyme label="a" type="f">verwesen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Na haer Moeders <rhyme label="b" type="m">begeer</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Thecla heel sonder <rhyme label="a" type="f" corresp="#s7:l1">vreesen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Springht selfs tot Godes <rhyme label="b" type="m" corresp="#s7:l2">eer</rhyme></l>
        <l id="s7:l5" met="3" type="-+">In een groot vyer met <rhyme label="c" type="m">lust</rhyme>:</l>
        <l id="s7:l6" met="3" type="-+">Na 't maecken van een <rhyme label="d" type="m">Kruys</rhyme>;</l>
        <l id="s7:l7" met="3" type="-+">Tot schant, ('t vyer heel <rhyme label="c" type="m" corresp="#s7:l5">uyt-blust</rhyme>,)</l>
        <l id="s7:l8" met="3" type="-+">Van 't Heydensche <rhyme label="d" type="m" corresp="#s7:l6">gespuys</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Geen hinder van 't vyer <rhyme label="a" type="f">lijde</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Want Iesus haer <rhyme label="b" type="m">behoedt</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Die haer in 't vyer <rhyme label="a" type="f" corresp="#s8:l1">verblijde</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Met sijnen troost seer <rhyme label="b" type="m" corresp="#s8:l2">soet</rhyme>.</l>
        <l id="s8:l5" met="3" type="-+">Van 't vyer lijdt sy geen <rhyme label="c" type="m">pijn</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Al wast een vyer des <rhyme label="d" type="m">doodts</rhyme>;</l>
        <l id="s8:l7" met="3" type="-+">By haer scheen Paulus te <rhyme label="c" type="m" corresp="#s8:l5">zijn</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Maer 't was de Soone <rhyme label="d" type="m" corresp="#s8:l6">Goodts</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Alexander uyt te <rhyme label="a" type="f">dooven</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Meent Theclaes <rhyme label="b" type="m">Maeghde-crans</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Ia die van haer te <rhyme label="a" type="f" corresp="#s9:l1">rooven</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Maer hy en had geen <rhyme label="b" type="m" corresp="#s9:l2">kans</rhyme>:</l>
        <l id="s9:l5" met="3" type="-+">Werpt haer voor beest, en <rhyme label="c" type="m">beest</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Als Leeuw, Stier ende <rhyme label="d" type="m">Beer</rhyme>;</l>
        <l id="s9:l7" met="3" type="-+">Die smeecken haer met <rhyme label="c" type="m" corresp="#s9:l5">Feest</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Sy doenen haer geen <rhyme label="d" type="m" corresp="#s9:l6">seer</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Serpenten haer niet <rhyme label="a" type="f">hind'ren</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Al zijnse vol <rhyme label="b" type="m">fenijn</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Niet meer als jonghe <rhyme label="a" type="f" corresp="#s10:l1">kind'ren</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Die sonder krachten <rhyme label="b" type="m" corresp="#s10:l2">zijn</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Noch menschen quaet <rhyme label="c" type="m">vermaert</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Want Iesus was by <rhyme label="d" type="m">haer</rhyme>.</l>
        <l id="s10:l7" met="3" type="-+">Haer Lichaem krijght de <rhyme label="c" type="m" corresp="#s10:l5">aerdt</rhyme>,</l>
        <l id="s10:l8" met="3" type="-+">Haer Ziel d'Hemelsche <rhyme label="d" type="m" corresp="#s10:l6">Schaer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

    <melody>Hoor toe al in het gemeen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Karel van Mander</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DEn Oyvaer en die Swaluw' <rhyme label="a" type="m">snel</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Jeghen't Somers <rhyme label="b" type="f">versoeten</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Om weder keeren mercken <rhyme label="a" type="m" corresp="#s1:l1">wel</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Haren tijdt, soo sy <rhyme label="b" type="f" corresp="#s1:l2">moeten</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">O Menschen die in zonden <rhyme label="b" type="f" corresp="#s1:l2">vroeten</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Merckt oock op uwen tijdt, t'is <rhyme label="c" type="m">noot</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Vertrecket niet tot in de <rhyme label="c" type="m" corresp="#s1:l6">doot</rhyme></l>
        <l id="s1:l8" met="3" type="-+">V te keeren tot <rhyme label="b" type="f" corresp="#s1:l2">boeten</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Christus die eeuwighe <rhyme label="a" type="m">wijsheyt</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Claeght over die <rhyme label="b" type="f">sondaren</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Hy biedt sijn handt, hy is <rhyme label="a" type="m" corresp="#s2:l1">bereyt</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Hy wildese wel <rhyme label="b" type="f" corresp="#s2:l2">sparen</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Maer al die hier nu laten <rhyme label="b" type="f" corresp="#s2:l2">varen</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Sijnen seer goeden raet <rhyme label="c" type="m">eerbaer</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Soo sal hy oock lachen met <rhyme label="c" type="m" corresp="#s2:l6">haer</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Als sy zijn in't <rhyme label="b" type="f" corresp="#s2:l2">beswaren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ick wil my vroech, seght David, <rhyme label="a" type="m">siet</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Tot u o Heere <rhyme label="b" type="f">pooghen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">t'Godloos wesen behaeght u <rhyme label="a" type="m" corresp="#s3:l1">niet</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Ghy en wiltse niet <rhyme label="b" type="f" corresp="#s3:l2">ghedooghen</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Die boosheyt doen voor uwen <rhyme label="b" type="f" corresp="#s3:l2">ooghen</rhyme>:</l>
        <l id="s3:l6" met="4" type="-+">Want Godt is haer tot een <rhyme label="c" type="m">vyandt</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Sy sullen voor sijns toorens <rhyme label="c" type="m" corresp="#s3:l6">brandt</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Te niet gaen end' <rhyme label="b" type="f" corresp="#s3:l2">verdrooghen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Maer den soon en sal die <rhyme label="a" type="m">misdaet</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Van sijnen Vader niet <rhyme label="b" type="f">draghen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Elck nae sijn werck, t'zy goet oft <rhyme label="a" type="m" corresp="#s4:l1">quaet</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Sal hebben loon oft <rhyme label="b" type="f" corresp="#s4:l2">slaghen</rhyme>:</l>
        <l id="s4:l5" met="4" type="-+">Hoe wel de Heere gheen <rhyme label="b" type="f" corresp="#s4:l2">behaghen</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Aen der Godtloosen doot en <rhyme label="c" type="m">heeft</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Maer dat hy bekeer ende <rhyme label="c" type="m" corresp="#s4:l6">leeft</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Dat wil hy t'allen <rhyme label="b" type="f" corresp="#s4:l2">daghen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Indien de Godtloose <rhyme label="a" type="m">bekeert</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Van al sijn zondich <rhyme label="b" type="f">sneven</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">En dat hy neerstich houden <rhyme label="a" type="m" corresp="#s5:l1">leert</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Al Gods rechten <rhyme label="b" type="f" corresp="#s5:l2">beschreven</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Jae recht en wel doet, hy sal <rhyme label="b" type="f" corresp="#s5:l2">leven</rhyme></l>
        <l id="s5:l6" met="4" type="-+">En niet sterven, eeuwich <rhyme label="c" type="m">termijn</rhyme></l>
        <l id="s5:l7" met="4" type="-+">Godt en sal niet ghedachtich <rhyme label="c" type="m" corresp="#s5:l6">zijn</rhyme></l>
        <l id="s5:l8" met="3" type="-+">T'quaet, dat hy heeft <rhyme label="b" type="f" corresp="#s5:l2">bedreven</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Maer als den rechtveerdighen <rhyme label="a" type="m">hier</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Laet zijn gherechtich <rhyme label="b" type="f">wesen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">En dat hy doet op die <rhyme label="a" type="m" corresp="#s6:l1">manier</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Der Godtloosen <rhyme label="b" type="f" corresp="#s6:l2">mispresen</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Hoe soude doch gheleven <rhyme label="b" type="f" corresp="#s6:l2">desen</rhyme>?</l>
        <l id="s6:l6" met="4" type="-+">Al sijn gherechticheyt <rhyme label="c" type="m">ghewracht</rhyme></l>
        <l id="s6:l7" met="4" type="-+">En sal niet meer wesen <rhyme label="c" type="m" corresp="#s6:l6">ghedacht</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Hy sal sterven <rhyme label="b" type="f" corresp="#s6:l2">onghenesen</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Hierom wilt u bekeeren <rhyme label="a" type="m">saen</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Wilt ghy t'leven <rhyme label="b" type="f">beerven</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Waerom wilt ghy aldus <rhyme label="a" type="m" corresp="#s7:l1">vergaen</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">In uwe zonden <rhyme label="b" type="f" corresp="#s7:l2">sterven</rhyme>?</l>
        <l id="s7:l5" met="4" type="-+">En worstelt dus niet nae <rhyme label="b" type="f" corresp="#s7:l2">t'bederven</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Want die Godtloose in s'weerelts <rhyme label="c" type="m">perck</rhyme></l>
        <l id="s7:l7" met="4" type="-+">Worstelen met woorden end' <rhyme label="c" type="m" corresp="#s7:l6">werck</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Om de doot te <rhyme label="b" type="f" corresp="#s7:l2">verwerven</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Ghelijck ghy neerstich hebt <rhyme label="a" type="m">gheweest</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Om van Godt af te <rhyme label="b" type="f">wijcken</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Bekeert, end' wilt nu, soo men <rhyme label="a" type="m" corresp="#s8:l1">leest</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Thienmael neersticher <rhyme label="b" type="f" corresp="#s8:l2">blijcken</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Den Heere te soecken van <rhyme label="b" type="f" corresp="#s8:l2">ghelijcken</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">T'is al Heydensch gheleeft <rhyme label="c" type="m">ghenoech</rhyme>,</l>
        <l id="s8:l7" met="4" type="-+">Slaet nu voort aen handt aen den <rhyme label="c" type="m" corresp="#s8:l6">ploech</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Sonder eenich <rhyme label="b" type="f" corresp="#s8:l2">omkijcken</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Staet op, van uwen slaep <rhyme label="a" type="m">ontweckt</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Doet goet end' laet het <rhyme label="b" type="f">quade</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Siet dat ghy doch niet meer en <rhyme label="a" type="m" corresp="#s9:l1">treckt</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Tot weelden Gods <rhyme label="b" type="f" corresp="#s9:l2">ghenade</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Want lijdt ghy uwer Zielen <rhyme label="b" type="f" corresp="#s9:l2">schade</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Wat baet oft ghy de weerelt <rhyme label="c" type="m">wont</rhyme>,</l>
        <l id="s9:l7" met="4" type="-+">Dus betert u van herten <rhyme label="c" type="m" corresp="#s9:l6">gondt</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Eer dat sal zijn te <rhyme label="b" type="f" corresp="#s9:l2">spade</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Want daer wert een groot <rhyme label="a" type="m">onderscheyt</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Als de Heere comt <rhyme label="b" type="f">richten</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Aen die hem dient met <rhyme label="a" type="m" corresp="#s10:l1">neersticheyt</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">End' aen die hem niet en <rhyme label="b" type="f" corresp="#s10:l2">swichten</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Want die afbreuck doen, sullen <rhyme label="b" type="f" corresp="#s10:l2">lichten</rhyme></l>
        <l id="s10:l6" met="4" type="-+">Boven die sterren schoon end' <rhyme label="c" type="m">claer</rhyme>,</l>
        <l id="s10:l7" met="4" type="-+">Die boose sullen comen <rhyme label="c" type="m" corresp="#s10:l6">daer</rhyme></l>
        <l id="s10:l8" met="3" type="-+">Met swert' end' duyster <rhyme label="b" type="f" corresp="#s10:l2">ghesichten</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">De goede sullen zijn <rhyme label="a" type="m">ghecroont</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Met een eeuwich <rhyme label="b" type="f">verblijden</rhyme>:</l>
        <l id="s11:l3" met="4" type="-+">De boose en worden niet <rhyme label="a" type="m" corresp="#s11:l1">gheloont</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Dan met pijn ende <rhyme label="b" type="f" corresp="#s11:l2">lijden</rhyme>:</l>
        <l id="s11:l5" met="4" type="-+">Droefheyt end' angst t'eeuwighen <rhyme label="b" type="f" corresp="#s11:l2">tijden</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">Is den vyerighen oven <rhyme label="c" type="m">heet</rhyme>,</l>
        <l id="s11:l7" met="4" type="-+">Maer Godt, die al de sijne <rhyme label="c" type="m" corresp="#s11:l6">weet</rhyme>,</l>
        <l id="s11:l8" met="3" type="-+">Sal sijn kinderen <rhyme label="b" type="f" corresp="#s11:l2">bevrijden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

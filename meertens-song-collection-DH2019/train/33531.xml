<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>33531</id>
    <date>
      <year-start>1614</year-start>
      <year-end>1614</year-end>
    </date>
    <tags>
      <tag standard-name="bijbels historielied" translation="biblical history song">bijbels historielied</tag>
    </tags>
    <melody>Aanhoor geklaag o bloeiende jeugd</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Rumoldus Batavus</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Aenhoort dit gheclach vrou, ende <rhyme label="a" type="m">man</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Van Herodis den wreden <rhyme label="a" type="m" corresp="#s1:l1">tiran</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Dieden kinderkens <rhyme label="b" type="m">vermoort</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Wie heeft oyt sulckx <rhyme label="b" type="m" corresp="#s1:l3">gehoort</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Ofte gelesen daer <rhyme label="a" type="m" corresp="#s1:l1">van</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Hy sadt als Coninck en had geen <rhyme label="a" type="m">peys</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Doen quamen die wijse van zoo verre <rhyme label="a" type="m" corresp="#s2:l1">reys</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Sy beleden hem <rhyme label="b" type="m">claer</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Dat haer Coninck ghebooren <rhyme label="b" type="m" corresp="#s2:l3">waer</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Dit was haer <rhyme label="a" type="m" corresp="#s2:l1">eys</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Herodes ontboodt al sonder <rhyme label="a" type="m">leth</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Al die gheleerden inden <rhyme label="a" type="m" corresp="#s3:l1">weth</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Hy vraechde wt <rhyme label="b" type="m">haer</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Welck die plaetse <rhyme label="b" type="m" corresp="#s3:l3">waer</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Van desen Coninck <rhyme label="a" type="m" corresp="#s3:l1">nedt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Sy spraecken allen met eene <rhyme label="a" type="m">stem</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Hy zal worden gheboren tot <rhyme label="a" type="m" corresp="#s4:l1">Bethlehem</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Herodes sprack daerwaerts gaet <rhyme label="b" type="m">ghy</rhyme></l>
        <l id="s4:l4" met="3" type="-+">En coemt dan weder tot <rhyme label="b" type="m" corresp="#s4:l3">my</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Maer zy vergaeten <rhyme label="a" type="m" corresp="#s4:l1">hem</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Doen worde Herpodes zoo seere <rhyme label="a" type="m">verstoort</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Want desen Coninck wilde hy hebben <rhyme label="a" type="m" corresp="#s5:l1">vermoort</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Hy trock eerstmael tot <rhyme label="b" type="m">Room</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Maer doen hy weder quam <rhyme label="b" type="m" corresp="#s5:l3">om</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Doen stelde hy dat <rhyme label="a" type="m" corresp="#s5:l1">voort</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Hy sonde zyn dienaers al in dat <rhyme label="a" type="m">lant</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Dat zy alle knechtkens diemen daer <rhyme label="a" type="m" corresp="#s6:l1">vant</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Out zijnde twee <rhyme label="b" type="m">iaer</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">En al wat daer onder <rhyme label="b" type="m" corresp="#s6:l3">waer</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Souden helpen van <rhyme label="a" type="m" corresp="#s6:l1">cant</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Syn dienaers volbrachten zyn wille <rhyme label="a" type="m">snoot</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Want zy mosten doen dat haer heer <rhyme label="a" type="m" corresp="#s7:l1">gheboot</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Sy vernieldense <rhyme label="b" type="m">al</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Tot twee iaren int <rhyme label="b" type="m" corresp="#s7:l3">ghetal</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Die smeten zy al <rhyme label="a" type="m" corresp="#s7:l1">doot</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Denckt hoe die moeders daer maecten <rhyme label="a" type="m">gheclach</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Alsmen haer kinderkens daer dooden <rhyme label="a" type="m" corresp="#s8:l1">sach</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Sy weenden <rhyme label="b" type="m">zeir</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">En trocken haer <rhyme label="b" type="m" corresp="#s8:l3">heir</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Alsmen wel dencken <rhyme label="a" type="m" corresp="#s8:l1">mach</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Hieremias heeft dit al voor <rhyme label="a" type="m">geseyt</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Hoe deerlijck die moeders hebben <rhyme label="a" type="m" corresp="#s9:l1">gheschreyt</rhyme></l>
        <l id="s9:l3" met="3" type="-+">O mensch, hoe comt dat ghy <rhyme label="b" type="m">muecht</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Doen dooden sulcke <rhyme label="b" type="m" corresp="#s9:l3">iuecht</rhyme></l>
        <l id="s9:l5" met="3" type="-+">O boose ende wrede <rhyme label="a" type="m" corresp="#s9:l1">feyt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Desen Herodes die was al zoo <rhyme label="a" type="m">wreet</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Dat hy zyn wijf, en kinderen oock dooden <rhyme label="a" type="m" corresp="#s10:l1">deet</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Maer wat heeft hem dat <rhyme label="b" type="m">ghebaet</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Christus hem noch <rhyme label="b" type="m" corresp="#s10:l3">ontgaet</rhyme></l>
        <l id="s10:l5" met="3" type="-+">Al waert hem wel <rhyme label="a" type="m" corresp="#s10:l1">leet</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Het kint was in Egipten, verre van <rhyme label="a" type="m">daer</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Als Herodes bedreef dit groot <rhyme label="a" type="m" corresp="#s11:l1">misbaer</rhyme></l>
        <l id="s11:l3" met="3" type="-+">Het waer al om <rhyme label="b" type="m">niet</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Want den Heere die <rhyme label="b" type="m" corresp="#s11:l3">siet</rhyme></l>
        <l id="s11:l5" met="3" type="-+">Toecomende dingen <rhyme label="a" type="m" corresp="#s11:l1">claer</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Dese doot was den kinderkens eenen <rhyme label="a" type="m">leer</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Daer sy mede clommen tot den <rhyme label="a" type="m" corresp="#s12:l1">Heer</rhyme></l>
        <l id="s12:l3" met="3" type="-+">Herodes heeft het so <rhyme label="b" type="m">gemaeckt</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Dat sy ten hemel zijn <rhyme label="b" type="m" corresp="#s12:l3">gheraeckt</rhyme></l>
        <l id="s12:l5" met="3" type="-+">Maer hy ter hellen <rhyme label="a" type="m" corresp="#s12:l1">neer</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Dese kinderen leden den doot seer <rhyme label="a" type="m">vroom</rhyme></l>
        <l id="s13:l2" met="4" type="-+">Sy zyn die eerste blomkens aen den <rhyme label="a" type="m" corresp="#s13:l1">boom</rhyme></l>
        <l id="s13:l3" met="3" type="-+">De eerste martelaers <rhyme label="b" type="m">ient</rhyme></l>
        <l id="s13:l4" met="3" type="-+">Al van het nieuwe <rhyme label="b" type="m" corresp="#s13:l3">testament</rhyme></l>
        <l id="s13:l5" met="3" type="-+">O vruchten seer <rhyme label="a" type="m" corresp="#s13:l1">schoon</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Sy en behielden gansch gheen smette in <rhyme label="a" type="m">haer</rhyme></l>
        <l id="s14:l2" met="4" type="-+">Want zy storuen al te samen <rhyme label="a" type="m" corresp="#s14:l1">Martelaer</rhyme></l>
        <l id="s14:l3" met="3" type="-+">Al wast sonder haer <rhyme label="b" type="m">consent</rhyme></l>
        <l id="s14:l4" met="3" type="-+">Sy zyn daer voor <rhyme label="b" type="m" corresp="#s14:l3">bekent</rhyme></l>
        <l id="s14:l5" met="3" type="-+">Vanden hemelschen <rhyme label="a" type="m" corresp="#s14:l1">vaer</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Sy storuen wt liefden van Godes <rhyme label="a" type="m">Soon</rhyme></l>
        <l id="s15:l2" met="4" type="-+">Oock waeren sy maechdekens seer <rhyme label="a" type="m" corresp="#s15:l1">schoon</rhyme></l>
        <l id="s15:l3" met="3" type="-+">Het Lammerken volghen sy <rhyme label="b" type="m">nae</rhyme></l>
        <l id="s15:l4" met="3" type="-+">Soo waerwaerts dat het <rhyme label="b" type="m" corresp="#s15:l3">gae</rhyme></l>
        <l id="s15:l5" met="3" type="-+">Hier bouen inden <rhyme label="a" type="m" corresp="#s15:l1">throon</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Bidt toch voor ons, O kinderkens seer <rhyme label="a" type="m">soet</rhyme></l>
        <l id="s16:l2" met="4" type="-+">Ghy die daer vrooch hebt ghestort v <rhyme label="a" type="m" corresp="#s16:l1">bloet</rhyme></l>
        <l id="s16:l3" met="3" type="-+">Voor uwen <rhyme label="b" type="m">bruydegom</rhyme>,</l>
        <l id="s16:l4" met="3" type="-+">Dus gheniet ghy weer <rhyme label="b" type="m" corresp="#s16:l3">om</rhyme></l>
        <l id="s16:l5" met="3" type="-+">Syn eeuwighe <rhyme label="a" type="m" corresp="#s16:l1">goet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

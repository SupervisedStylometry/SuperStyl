  <author>Albertus Buitendyck</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">GOdt selver met sijn eyge <rhyme label="a" type="m">handt</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Heeft gemaeckt, en <rhyme label="b" type="f">geschreven</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Een voorschrift van een Tempel <rhyme label="a" type="m" corresp="#s1:l1">kant</rhyme>;</l>
        <l id="s1:l4" met="3" type="-+">Heeft David dit <rhyme label="b" type="f" corresp="#s1:l2">gegeven</rhyme>;</l>
        <l id="s1:l5" met="3" type="-+">Dat Salomon sijn <rhyme label="c" type="f">Soone</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Na dit schrift, en <rhyme label="c" type="f" corresp="#s1:l5">patroone</rhyme></l>
        <l id="s1:l7" met="2" type="-+">Timmere <rhyme label="d" type="m">souw</rhyme>,</l>
        <l id="s1:l8" met="2" type="-+">Cierlijck en <rhyme label="d" type="m" corresp="#s1:l7">trouw</rhyme></l>
        <l id="s1:l9" met="4" type="-+">Zijn Tempels, cieraet en <rhyme label="d" type="m" corresp="#s1:l7">gebouw</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Als dese Tempel wort <rhyme label="a" type="m">gewijt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Van de minst tot de <rhyme label="b" type="f">meesten</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Al 't volck waren verheught en <rhyme label="a" type="m" corresp="#s2:l1">blijdt</rhyme>.</l>
        <l id="s2:l4" met="3" type="-+">In dit groot feest der <rhyme label="b" type="f" corresp="#s2:l2">feesten</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Goods glory <rhyme label="c" type="f">openbaerde</rhyme>.</l>
        <l id="s2:l6" met="3" type="-+">Daer en boven <rhyme label="c" type="f" corresp="#s2:l5">verklaerde</rhyme>:</l>
        <l id="s2:l7" met="2" type="-+">Op die <rhyme label="d" type="m">voortaen</rhyme>,</l>
        <l id="s2:l8" met="2" type="-+">Die hier in <rhyme label="d" type="m" corresp="#s2:l7">gaen</rhyme></l>
        <l id="s2:l9" met="4" type="-+">Mijn oogh' als oor sal open <rhyme label="d" type="m" corresp="#s2:l7">staen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Het volck heeft acht daghen daer <rhyme label="a" type="m">naer</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">De Wydingh van de <rhyme label="b" type="f">Tempel</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Geviert gehoude alle <rhyme label="a" type="m" corresp="#s3:l1">jaer</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Na Salomons <rhyme label="b" type="f" corresp="#s3:l2">exempel</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">De Priesters in de <rhyme label="c" type="f">tijde</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Van Esdras, Goods kerck <rhyme label="c" type="f" corresp="#s3:l5">wijde</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">En Judas <rhyme label="d" type="m">mee</rhyme></l>
        <l id="s3:l8" met="2" type="-+">De <rhyme label="d" type="m" corresp="#s3:l7">Machabe</rhyme></l>
        <l id="s3:l9" met="4" type="-+">Vierde de Wydingh van Goods <rhyme label="d" type="m" corresp="#s3:l7">stee</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">'t Feest met een blijdt hart, en <rhyme label="a" type="m">devoot</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Geviert is menich <rhyme label="b" type="f">jaren</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Hier door belijde kleyn en <rhyme label="a" type="m" corresp="#s4:l1">groot</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Dat zy danckbarigh <rhyme label="b" type="f" corresp="#s4:l2">waren</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Ia Christus Heer der <rhyme label="c" type="f">Heeren</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Tot Jerusalem komt <rhyme label="c" type="f" corresp="#s4:l5">eeren</rhyme></l>
        <l id="s4:l7" met="2" type="-+">Dit eyge <rhyme label="d" type="m">feest</rhyme></l>
        <l id="s4:l8" met="2" type="-+">Met lijf en <rhyme label="d" type="m" corresp="#s4:l7">geest</rhyme>;</l>
        <l id="s4:l9" met="4" type="-+">Soo men by Sint Joannes <rhyme label="d" type="m" corresp="#s4:l7">leest</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Wy loven jaerlijcx Godt den <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">En Danckbaerheyt <rhyme label="b" type="f">betoonen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Want inde kerck na ons <rhyme label="a" type="m" corresp="#s5:l1">begeer</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Is neder komen <rhyme label="b" type="f" corresp="#s5:l2">woonen</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Hierom onse <rhyme label="c" type="f">kermisse</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Tot een <rhyme label="c" type="f" corresp="#s5:l5">getuygenisse</rhyme></l>
        <l id="s5:l7" met="2" type="-+">Wydingh <rhyme label="d" type="m">bediet</rhyme>;</l>
        <l id="s5:l8" met="2" type="-+">En dat <rhyme label="d" type="m" corresp="#s5:l7">geschiet</rhyme></l>
        <l id="s5:l9" met="4" type="-+">Is d' eerste misse met <rhyme label="d" type="m" corresp="#s5:l7">joliet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ver boven Konincx <rhyme label="a" type="m">Salomons</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Achte wy onse <rhyme label="b" type="f">kercken</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">Geen Manna in d'Arck des <rhyme label="a" type="m" corresp="#s6:l1">verbondts</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Als doe, wy hier <rhyme label="b" type="f" corresp="#s6:l2">bemercken</rhyme>;</l>
        <l id="s6:l5" met="3" type="-+">Maer selver Godt <rhyme label="c" type="f">almachtigh</rhyme>.</l>
        <l id="s6:l6" met="3" type="-+">In 't Sacrament <rhyme label="c" type="f" corresp="#s6:l5">waerachtigh</rhyme>,</l>
        <l id="s6:l7" met="2" type="-+">Die met sijn <rhyme label="d" type="m">bloet</rhyme>,</l>
        <l id="s6:l8" met="2" type="-+">En vleesch ons <rhyme label="d" type="m" corresp="#s6:l7">voet</rhyme>:</l>
        <l id="s6:l9" met="4" type="-+">Hier hooren wy zijn woorden <rhyme label="d" type="m" corresp="#s6:l7">soet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">d' Onse is Goods sael, 's Hemels <rhyme label="a" type="m">poort</rhyme>;</l>
        <l id="s7:l2" met="3" type="-+">Een plaets om Godt te <rhyme label="b" type="f">vreesen</rhyme>.</l>
        <l id="s7:l3" met="4" type="-+">Na Sinte Jans gulde monts <rhyme label="a" type="m" corresp="#s7:l1">woort</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Veel Eng'len sijn in <rhyme label="b" type="f" corresp="#s7:l2">desen</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">Met Moyses Godt wilt <rhyme label="c" type="f">groeten</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Met 't hart met lipp' en <rhyme label="c" type="f" corresp="#s7:l5">voeten</rhyme>,</l>
        <l id="s7:l7" met="2" type="-+">En metter <rhyme label="d" type="m">spoet</rhyme>,</l>
        <l id="s7:l8" met="2" type="-+">Uyttrecken <rhyme label="d" type="m" corresp="#s7:l7">moet</rhyme></l>
        <l id="s7:l9" met="4" type="-+">Sondige schoenen van u <rhyme label="d" type="m" corresp="#s7:l7">voet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Voor u mijn Godt, ick neder <rhyme label="a" type="m">kniel</rhyme>;</l>
        <l id="s8:l2" met="3" type="-+">Toont my dese <rhyme label="b" type="f">genade</rhyme>:</l>
        <l id="s8:l3" met="4" type="-+">Dat ghy komt woonen in mijn <rhyme label="a" type="m" corresp="#s8:l1">ziel</rhyme>.</l>
        <l id="s8:l4" met="3" type="-+">Ey! wilt my niet <rhyme label="b" type="f" corresp="#s8:l2">versmade</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Vertroost mijn sondaer <rhyme label="c" type="f">hede</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Als ghy Sacheus <rhyme label="c" type="f" corresp="#s8:l5">dede</rhyme>,</l>
        <l id="s8:l7" met="2" type="-+">Vergeeft mijn <rhyme label="d" type="m">quaet</rhyme>,</l>
        <l id="s8:l8" met="2" type="-+">En mijn <rhyme label="d" type="m" corresp="#s8:l7">misdaet</rhyme>;</l>
        <l id="s8:l9" met="4" type="-+">En seght: met salicheyt <rhyme label="d" type="m" corresp="#s8:l7">opstaet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

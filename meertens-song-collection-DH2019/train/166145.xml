    <melody>Een plantsoen schoon boven alle</melody>
  <author>Cornelis Maertsz.</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">WAnneer Og sijn <rhyme label="a" type="f">Reuse-leden</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Woud verquicken door de <rhyme label="b" type="m">baeck</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Soo lagh hy in rust en <rhyme label="a" type="f" corresp="#s1:l1">vrede</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Schoot-vry voor de dulle <rhyme label="b" type="m" corresp="#s1:l2">wraeck</rhyme>:</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Want hy stack sijn grove <rhyme label="a" type="f">schoncken</rhyme></l>
        <l id="s2:l2" met="4" type="+-">In een yseren <rhyme label="b" type="m">Bolwerck</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Tot sijn slaep-plaets vast <rhyme label="a" type="f" corresp="#s2:l1">ghekloncken</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Onbewegelijck, en <rhyme label="b" type="m" corresp="#s2:l2">sterck</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Maer de vromen, die <rhyme label="a" type="f">beschermingh</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Soecken voor haer swacke <rhyme label="b" type="m">Ziel</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Loopen toe tot Godts <rhyme label="a" type="f" corresp="#s3:l1">ontfermingh</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Daer noyt vyandt binnen <rhyme label="b" type="m" corresp="#s3:l2">viel</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Daer en sijn geen vaste <rhyme label="a" type="f">Steden</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Noch daer is geen ys'ren <rhyme label="b" type="m">Slot</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Daer men alsoo rust in <rhyme label="a" type="f" corresp="#s4:l1">vreden</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Als in't heyl van onsen <rhyme label="b" type="m" corresp="#s4:l2">Godt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

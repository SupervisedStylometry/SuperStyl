  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Een Liet tot s'Geests <rhyme label="a" type="f">verlichten</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Om een dochterken <rhyme label="b" type="m">deuijn</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Of sy daer deur mochte <rhyme label="a" type="f" corresp="#s1:l1">stichten</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Ende leeren sedich <rhyme label="b" type="m" corresp="#s1:l2">zijn</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">t'Waer wel des Heeren <rhyme label="c" type="f">wille</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Waert ghy sedich en <rhyme label="c" type="f" corresp="#s1:l5">stille</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Vader, Moeder <rhyme label="d" type="m">ghehoorsaem</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Tot alle deucht <rhyme label="d" type="m" corresp="#s1:l7">bequaem</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Soeckt den Heere te <rhyme label="a" type="f">behaghen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Als een Bruyt reyn u <rhyme label="b" type="m">verciert</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Wilt neerstich sorghe <rhyme label="a" type="f" corresp="#s2:l1">draghen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Dat ghy zijt wel <rhyme label="b" type="m" corresp="#s2:l2">ghemaniert</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Met manieren en goe <rhyme label="c" type="f">seden</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">En oock met <rhyme label="c" type="f" corresp="#s2:l5">ghehoorsaemheden</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Weest daer mede <rhyme label="d" type="m">aenghedaen</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Wilt soo in Gods vreese <rhyme label="d" type="m" corresp="#s2:l7">voortgaen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Stelt die ydelheyt <rhyme label="a" type="f">besyden</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Wilt op Gods woort nemen <rhyme label="b" type="m">merck</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Wilt lusten der jonckheyt <rhyme label="a" type="f" corresp="#s3:l1">myden</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Laet oock alle Kinder <rhyme label="b" type="m" corresp="#s3:l2">werck</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">En vraecht nae de rechte <rhyme label="c" type="f">bane</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Stelt u om daer op te <rhyme label="c" type="f" corresp="#s3:l5">gane</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Vwe Lenden op <rhyme label="d" type="m">schort</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">En weest met Gods woort <rhyme label="d" type="m" corresp="#s3:l7">omgort</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Laet Gods woort uwen schat <rhyme label="a" type="f">wesen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">En daer op seer vaste <rhyme label="b" type="m">steunt</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">En zijt neerstich om te <rhyme label="a" type="f" corresp="#s4:l1">lesen</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Dat ghy onder scheyden <rhyme label="b" type="m" corresp="#s4:l2">kunt</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Het goet uyt het het quaet <rhyme label="c" type="f">gemeene</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Op dat ghy het goet <rhyme label="c" type="f" corresp="#s4:l5">alleene</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Meucht volbrengen t'alder <rhyme label="d" type="m">stont</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Als ghy't onderscheyden <rhyme label="d" type="m" corresp="#s4:l7">cont</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Wilt alsoo neerstich <rhyme label="a" type="f">arbeyden</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">In des Heeren woort <rhyme label="b" type="m">ghewis</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Op dat ghy meucht <rhyme label="a" type="f" corresp="#s5:l1">onderscheyden</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Wat des heeren wille <rhyme label="b" type="m" corresp="#s5:l2">is</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Wilt u neerstich daer toe <rhyme label="c" type="f">poogen</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Hebt gods vreese altijts voor <rhyme label="c" type="f" corresp="#s5:l5">oogen</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Roept den heere om hulpe <rhyme label="d" type="m">an</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">Hy ist diese u gheven <rhyme label="d" type="m" corresp="#s5:l7">can</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">God sal u wel wijsheyt <rhyme label="a" type="f">geven</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Ist dat ghy't van hem <rhyme label="b" type="m">begheert</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Maer ghy moet zijn woort <rhyme label="a" type="f" corresp="#s6:l1">beleven</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">En hauden in grooter <rhyme label="b" type="m" corresp="#s6:l2">weert</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">En bewijsen met de <rhyme label="c" type="f">wercken</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Dat de menschen meughen <rhyme label="c" type="f" corresp="#s6:l5">mercken</rhyme></l>
        <l id="s6:l7" met="4" type="+-">Dat alsoo u Licht <rhyme label="d" type="m">Rijst</rhyme>,</l>
        <l id="s6:l8" met="4" type="+-">Dat elck Godt daer deur <rhyme label="d" type="m" corresp="#s6:l7">prijst</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Als hebdy t'gheloove <rhyme label="a" type="f">schoone</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Ende de wercken <rhyme label="b" type="m">niet</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Ghy en sult doch niet te <rhyme label="a" type="f" corresp="#s7:l1">loone</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Hebben naer des Schrifts <rhyme label="b" type="m" corresp="#s7:l2">bediet</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Maer ghy moet dese twee <rhyme label="c" type="f">dinghen</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">t'Gheloove en de wercken <rhyme label="c" type="f" corresp="#s7:l5">bringen</rhyme>,</l>
        <l id="s7:l7" met="4" type="+-">Want sonder de wercken <rhyme label="d" type="m">bloot</rhyme>,</l>
        <l id="s7:l8" met="4" type="+-">Soo is het Gheloove <rhyme label="d" type="m" corresp="#s7:l7">doot</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Als ghy tgheloove hebt <rhyme label="a" type="f">vercregen</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Van den heere <rhyme label="b" type="m">delicaet</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Soo wandelt dan op zijne <rhyme label="a" type="f" corresp="#s8:l1">weghen</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Daermen totten leven <rhyme label="b" type="m" corresp="#s8:l2">gaet</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Want wilt ghy eewich <rhyme label="c" type="f">domineeren</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Soo moet ghy dien wech <rhyme label="c" type="f" corresp="#s8:l5">passeeren</rhyme>,</l>
        <l id="s8:l7" met="4" type="+-">Die onsen <rhyme label="d" type="m">Capeteyn</rhyme>,</l>
        <l id="s8:l8" met="4" type="+-">Voor en ginck wt liefden <rhyme label="d" type="m" corresp="#s8:l7">Reyn</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Hebt dien Capeteyn voor <rhyme label="a" type="f">oogen</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Die ons vierich <rhyme label="b" type="m">voorghinck</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Wilt de jonckheyt doen <rhyme label="a" type="f" corresp="#s9:l1">verdroogen</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Hebt hem lief voor alle <rhyme label="b" type="m" corresp="#s9:l2">dinck</rhyme>,</l>
        <l id="s9:l5" met="4" type="+-">Stelt aen hem al uwe <rhyme label="c" type="f">zinnen</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">Soo sal hy u oock <rhyme label="c" type="f" corresp="#s9:l5">beminnen</rhyme>,</l>
        <l id="s9:l7" met="4" type="+-">Ghy wert zijn dochter <rhyme label="d" type="m">hoort</rhyme>,</l>
        <l id="s9:l8" met="4" type="+-">Soo ghy doet naer sijn <rhyme label="d" type="m" corresp="#s9:l7">woort</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Wandelt doch als wijse <rhyme label="a" type="f">ghesinde</rhyme>,</l>
        <l id="s10:l2" met="4" type="+-">Vreest de heere voor een <rhyme label="b" type="m">slodt</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Soo sult ghy wesen de <rhyme label="a" type="f" corresp="#s10:l1">beminde</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">Vanden Heere uwen <rhyme label="b" type="m" corresp="#s10:l2">Godt</rhyme>,</l>
        <l id="s10:l5" met="4" type="+-">Hier me dencke ick dit te <rhyme label="c" type="f">enden</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">Willet doch int goede <rhyme label="c" type="f" corresp="#s10:l5">wenden</rhyme>,</l>
        <l id="s10:l7" met="4" type="+-">mijn seer Simpel <rhyme label="d" type="m">ghesanck</rhyme>,</l>
        <l id="s10:l8" met="4" type="+-">Nemet doch van my in <rhyme label="d" type="m" corresp="#s10:l7">danck</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

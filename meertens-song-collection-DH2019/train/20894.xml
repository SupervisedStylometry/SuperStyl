    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Willem de Swaen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Alderwaerdste <rhyme label="a" type="m">Man</rhyme>!</l>
        <l id="s1:l2" met="3" type="-+">Die zijt genaemt Sint <rhyme label="a" type="m" corresp="#s1:l1">Ian</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Ick wil nu van stonden <rhyme label="a" type="m" corresp="#s1:l1">an</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Uw' groote deughd // met groote <rhyme label="b" type="m">vreughd</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Beschrijven <rhyme label="c" type="m">gaen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">'k Bid U wilt 't in danck <rhyme label="c" type="m" corresp="#s1:l5">ontfaen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Als Ghy waert sesthien <rhyme label="a" type="m">jaer</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Verliet Ghy Moe'r, en <rhyme label="a" type="m" corresp="#s2:l1">Va'er</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">En Ghy volghden Jesvm <rhyme label="a" type="m" corresp="#s2:l1">naer</rhyme>:</l>
        <l id="s2:l4" met="4" type="-+">Ghy naemt uw' keer // tot desen <rhyme label="b" type="m">Heer</rhyme>:</l>
        <l id="s2:l5" met="2" type="-+">Ghy volghden <rhyme label="c" type="m">Hem</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Op 't geluydt van sijne <rhyme label="c" type="m" corresp="#s2:l5">stem</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ghy minden Jesvm <rhyme label="a" type="m">seer</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Die U beminden <rhyme label="a" type="m" corresp="#s3:l1">we'er</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Daeg'lijcks meerder ende <rhyme label="a" type="m" corresp="#s3:l1">meer</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Om dat Hy sagh // van dagh tot <rhyme label="b" type="m">dagh</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Dat Ghy ginght <rhyme label="c" type="m">voort</rhyme></l>
        <l id="s3:l6" met="4" type="+-">In de deughden na sijn <rhyme label="c" type="m" corresp="#s3:l5">woord</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Uw' soete <rhyme label="a" type="m">leydtsaemheyd</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Uw' groote <rhyme label="a" type="m" corresp="#s4:l1">suyverheyd</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Uwe blinde <rhyme label="a" type="m" corresp="#s4:l1">g'hoorsaemheyd</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Uw' goeden aerdt // die waren <rhyme label="b" type="m">waerd</rhyme></l>
        <l id="s4:l5" met="2" type="-+">Dat God sijn <rhyme label="c" type="m">sin</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Op U stelden, en sijn <rhyme label="c" type="m" corresp="#s4:l5">min</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Ioan! Ghy hebt <rhyme label="a" type="m">gesien</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Dat wonder werck <rhyme label="a" type="m" corresp="#s5:l1">geschie'n</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Hoe dat Jesus heeft doen <rhyme label="a" type="m" corresp="#s5:l1">vlie'n</rhyme></l>
        <l id="s5:l4" met="4" type="-+">De dood van 't kind // 't welck seer <rhyme label="b" type="m">bemindt</rhyme></l>
        <l id="s5:l5" met="2" type="-+">Ja√Ørus <rhyme label="c" type="m">had</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Die voor 't leven Jesum <rhyme label="c" type="m" corresp="#s5:l5">badt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ghy hebt den Heer <rhyme label="a" type="m">aenschouwt</rhyme></l>
        <l id="s6:l2" met="3" type="-+">In 't Hoofken gantsch <rhyme label="a" type="m" corresp="#s6:l1">benouwt</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Ja eylaes! met bloed <rhyme label="a" type="m" corresp="#s6:l1">bedouwt</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Als vol van smert // was Jesus <rhyme label="b" type="m">hert</rhyme>,</l>
        <l id="s6:l5" met="2" type="-+">Als in <rhyme label="c" type="m">noodt</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Jesus was 's nachts voor sijn <rhyme label="c" type="m" corresp="#s6:l5">dood</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Ghy sach Mariaes <rhyme label="a" type="m">Soon</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Als eene Sonne <rhyme label="a" type="m" corresp="#s7:l1">schoon</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Op den bergh als op sijn <rhyme label="a" type="m" corresp="#s7:l1">throon</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Sneeu-wit sijn kleed // (soo als-men <rhyme label="b" type="m">weet</rhyme>.)</l>
        <l id="s7:l5" met="2" type="-+">Ghy hoorden <rhyme label="c" type="m">aen</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Oock God-Vaders soet <rhyme label="c" type="m" corresp="#s7:l5">vermaen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Ioan! Ghy hebt <rhyme label="a" type="m">geleyt</rhyme></l>
        <l id="s8:l2" met="3" type="-+">U hooft met <rhyme label="a" type="m" corresp="#s8:l1">lieff'lijckheyd</rhyme></l>
        <l id="s8:l3" met="4" type="+-">(O wat plaets was U <rhyme label="a" type="m" corresp="#s8:l1">bereydt</rhyme>!)</l>
        <l id="s8:l4" met="4" type="-+">In Jesus schoot // recht voor sijn <rhyme label="b" type="m">dood</rhyme>:</l>
        <l id="s8:l5" met="2" type="-+">In wat een <rhyme label="c" type="m">rust</rhyme></l>
        <l id="s8:l6" met="4" type="+-">Laeght Ghy daer, en met wat <rhyme label="c" type="m" corresp="#s8:l5">lust</rhyme>!</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Ioan! Ghy hebt <rhyme label="a" type="m">gestaen</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Aen 't kruys, met rouw <rhyme label="a" type="m" corresp="#s9:l1">belae'n</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Als Heer Jesus heeft <rhyme label="a" type="m" corresp="#s9:l1">voldaen</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Der sonden boet // door 't dierbaer <rhyme label="b" type="m">bloed</rhyme>,</l>
        <l id="s9:l5" met="2" type="-+">Welck Hy <rhyme label="c" type="m">vergoot</rhyme></l>
        <l id="s9:l6" met="4" type="+-">Voor ons allen, kleyn en <rhyme label="c" type="m" corresp="#s9:l5">groot</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Ghy zijt ter goeder <rhyme label="a" type="m">trouw</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Vergunt aen d' waerdste <rhyme label="a" type="m" corresp="#s10:l1">Vrouw</rhyme></l>
        <l id="s10:l3" met="4" type="+-">(Welcke was vervult met <rhyme label="a" type="m" corresp="#s10:l1">rouw</rhyme>)</l>
        <l id="s10:l4" met="4" type="-+">Tot eene soon // siet wat een <rhyme label="b" type="m">loon</rhyme>!</l>
        <l id="s10:l5" met="2" type="-+">Van uwen <rhyme label="c" type="m">Heer</rhyme></l>
        <l id="s10:l6" met="4" type="+-">Aen het Kruys, O wat een <rhyme label="c" type="m" corresp="#s10:l5">eer</rhyme>!</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Jae dese selfde <rhyme label="a" type="m">Maeght</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">(Die God heeft meest <rhyme label="a" type="m" corresp="#s11:l1">behaeght</rhyme>,</l>
        <l id="s11:l3" met="4" type="+-">Die ons all' aen God <rhyme label="a" type="m" corresp="#s11:l1">opdraeght</rhyme>)</l>
        <l id="s11:l4" met="4" type="-+">U Moeder is // (het is <rhyme label="b" type="m">gewis</rhyme>)</l>
        <l id="s11:l5" met="2" type="-+">Van God <rhyme label="c" type="m">gestelt</rhyme></l>
        <l id="s11:l6" met="4" type="+-">Voor sijn dood op 't <rhyme label="c" type="m" corresp="#s11:l5">Galgen-veld</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Des is 't dat Ghy soo <rhyme label="a" type="m">groot</rhyme></l>
        <l id="s12:l2" met="3" type="-+">By God zijt voor uw' <rhyme label="a" type="m" corresp="#s12:l1">dood</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">Wat sult Ghy van 't vleys <rhyme label="a" type="m" corresp="#s12:l1">ontbloot</rhyme></l>
        <l id="s12:l4" met="4" type="-+">In 's hemels zael // aen Godes <rhyme label="b" type="m">mael</rhyme></l>
        <l id="s12:l5" met="2" type="-+">Niet grooter <rhyme label="c" type="m">zijn</rhyme>,</l>
        <l id="s12:l6" met="4" type="+-">Buyten alle druck en <rhyme label="c" type="m" corresp="#s12:l5">pijn</rhyme>?</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Ghy zijt van grooter <rhyme label="a" type="m">macht</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Joan! waerom ick <rhyme label="a" type="m" corresp="#s13:l1">tracht</rhyme></l>
        <l id="s13:l3" met="4" type="+-">U te dienen dagh en <rhyme label="a" type="m" corresp="#s13:l1">nacht</rhyme>;</l>
        <l id="s13:l4" met="4" type="-+">Ick val te voet // met groot <rhyme label="b" type="m">ootmoed</rhyme>,</l>
        <l id="s13:l5" met="2" type="-+">Joannes! <rhyme label="c" type="m">U</rhyme>;</l>
        <l id="s13:l6" met="4" type="+-">Ick bidd' U, verhoort my <rhyme label="c" type="m" corresp="#s13:l5">nu</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Het vleys my swaer <rhyme label="a" type="m">bestrijdt</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Den Duyvel my <rhyme label="a" type="m" corresp="#s14:l1">benijdt</rhyme>,</l>
        <l id="s14:l3" met="4" type="+-">Van haer listen my <rhyme label="a" type="m" corresp="#s14:l1">bevrijdt</rhyme>:</l>
        <l id="s14:l4" met="4" type="-+">Maeckt klaer mijn saeck // maeckt dat ick <rhyme label="b" type="m">raeck</rhyme></l>
        <l id="s14:l5" met="2" type="-+">In 's Hemels <rhyme label="c" type="m">Hof</rhyme>,</l>
        <l id="s14:l6" met="4" type="+-">Uyt te trompen Godes <rhyme label="c" type="m" corresp="#s14:l5">lof</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">O alderwaerdst' <rhyme label="a" type="m">Patroon</rhyme>!</l>
        <l id="s15:l2" met="3" type="-+">Verkrijcht my tot een <rhyme label="a" type="m" corresp="#s15:l1">loon</rhyme></l>
        <l id="s15:l3" met="4" type="+-">D' onverganckelijcke <rhyme label="a" type="m" corresp="#s15:l1">kroon</rhyme>,</l>
        <l id="s15:l4" met="4" type="-+">Och of ick quam // 't onnoosel <rhyme label="b" type="m">Lam</rhyme></l>
        <l id="s15:l5" met="2" type="-+">Door U te <rhyme label="c" type="m">sien</rhyme>!</l>
        <l id="s15:l6" met="4" type="+-">Hoe sou ick my dan <rhyme label="c" type="m" corresp="#s15:l5">verblie'n</rhyme>!</l>
      </lg>
    </lg>
  </text>
</song>

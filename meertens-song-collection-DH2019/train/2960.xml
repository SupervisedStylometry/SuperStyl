    <melody>Zuivere schone vermakelijke maagd</melody>
  <author>Dirk Rafaelsz. Camphuysen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">ONbestendigh droef <rhyme label="a" type="m">gemoedt</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Hard belust om rust te <rhyme label="b" type="f">vinden</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Dat de smert t'saem voelt en <rhyme label="a" type="m" corresp="#s1:l1">voedt</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Maer de grondt nooyt recht <rhyme label="b" type="f" corresp="#s1:l2">bezinden</rhyme>:</l>
        <l id="s1:l5" met="4" type="+-">Buyten u zoeckt ghy den <rhyme label="c" type="m">vre'e</rhyme></l>
        <l id="s1:l6" met="3" type="+-">In verscheyden <rhyme label="d" type="f">zaken</rhyme>.</l>
        <l id="s1:l7" met="4" type="+-">Brengt ghy zelfs de rust niet <rhyme label="c" type="m" corresp="#s1:l5">me'e</rhyme></l>
        <l id="s1:l8" met="3" type="+-">Nooyt zult ghyze <rhyme label="d" type="f" corresp="#s1:l6">naken</rhyme>.</l>
        <l id="s1:l9" met="2" type="+-">Wat jaeght <rhyme label="e" type="m">ghy</rhyme>?</l>
        <l id="s1:l10" met="2" type="+-">'t Is in <rhyme label="e" type="m" corresp="#s1:l9">dy</rhyme></l>
        <l id="s1:l11" met="3" type="+-">Dat rust doet <rhyme label="f" type="f">verdrijven</rhyme>.</l>
        <l id="s1:l12" met="2" type="+-">Loop niet <rhyme label="g" type="m">verdt</rhyme>:</l>
        <l id="s1:l13" met="2" type="+-">In u <rhyme label="g" type="m" corresp="#s1:l12">hert</rhyme></l>
        <l id="s1:l14" met="3" type="+-">Moest ghy zijn en <rhyme label="f" type="f" corresp="#s1:l11">blijven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Waerder (denckt ghy) vre'e in 't <rhyme label="a" type="m">Landt</rhyme>;</l>
        <l id="s2:l2" met="4" type="+-">Dan zou' alle dingen wel <rhyme label="b" type="f">zijn</rhyme>;</l>
        <l id="s2:l3" met="4" type="+-">Waer of dees of die van <rhyme label="a" type="m" corresp="#s2:l1">kant</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Zoo zou' 't hert vry van gequel <rhyme label="b" type="f" corresp="#s2:l2">zijn</rhyme>:</l>
        <l id="s2:l5" met="4" type="+-">Had ick dus of zoo veel <rhyme label="c" type="m">goedt</rhyme>,</l>
        <l id="s2:l6" met="3" type="+-">Zoo leefd' ick <rhyme label="d" type="f">gerustigh</rhyme>:</l>
        <l id="s2:l7" met="4" type="+-">Derfd' ick maer dees <rhyme label="c" type="m" corresp="#s2:l5">tegenspoedt</rhyme>,</l>
        <l id="s2:l8" met="3" type="+-">Zoo waer 't herte <rhyme label="d" type="f" corresp="#s2:l6">lustigh</rhyme>:</l>
        <l id="s2:l9" met="2" type="+-">'k Waer steedts <rhyme label="e" type="m">bly</rhyme></l>
        <l id="s2:l10" met="2" type="+-">Zoo ick <rhyme label="e" type="m" corresp="#s2:l9">vry</rhyme></l>
        <l id="s2:l11" met="3" type="+-">Van dees houlijcks block <rhyme label="f" type="f">waer</rhyme>:</l>
        <l id="s2:l12" met="2" type="+-">'k Waer te <rhyme label="g" type="m">vre'en</rhyme></l>
        <l id="s2:l13" met="2" type="+-">Had ick <rhyme label="g" type="m" corresp="#s2:l12">Een'</rhyme></l>
        <l id="s2:l14" met="3" type="+-">Daer ick me'e in 't Jock <rhyme label="f" type="f" corresp="#s2:l11">waer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Hadt ghy dit of hadt ghy <rhyme label="a" type="m">dat</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">'t Waer hoe 't waer: (daer geldt geen <rhyme label="b" type="f">meenen</rhyme>)</l>
        <l id="s3:l3" met="4" type="+-">Zoo lang ghy u zelven <rhyme label="a" type="m" corresp="#s3:l1">hadt</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Bleeft ghy evenwel aen 't <rhyme label="b" type="f" corresp="#s3:l2">stenen</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Of het Landt al waer in <rhyme label="c" type="m">vre'e</rhyme>,</l>
        <l id="s3:l6" met="3" type="+-">Noch bleeft Ghy in <rhyme label="d" type="f">roeren</rhyme>:</l>
        <l id="s3:l7" met="4" type="+-">In uw ziel draeght ghyze <rhyme label="c" type="m" corresp="#s3:l5">me'e</rhyme></l>
        <l id="s3:l8" met="3" type="+-">Die steedts oorlogh <rhyme label="d" type="f" corresp="#s3:l6">voeren</rhyme>,</l>
        <l id="s3:l9" met="2" type="+-">Goedt, of <rhyme label="e" type="m">neen</rhyme>;</l>
        <l id="s3:l10" met="2" type="+-">Spoedt, of <rhyme label="e" type="m" corresp="#s3:l9">geen</rhyme>:</l>
        <l id="s3:l11" met="3" type="+-">'t Kan geen hert <rhyme label="f" type="f">herstellen</rhyme>.</l>
        <l id="s3:l12" met="2" type="+-"><rhyme label="g" type="m">Ongehout</rhyme>,</l>
        <l id="s3:l13" met="2" type="+-">Of <rhyme label="g" type="m" corresp="#s3:l12">getrout</rhyme>:</l>
        <l id="s3:l14" met="3" type="+-">'t Ziecke hert moet <rhyme label="f" type="f" corresp="#s3:l11">quellen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Waerder dees of die al <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Evenwel bleeft ghy in <rhyme label="b" type="f">onlust</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Zoo gh' u zelven niet <rhyme label="a" type="m" corresp="#s4:l1">ontvliedt</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Nimmermeer ontvliedt ghy d' <rhyme label="b" type="f" corresp="#s4:l2">onrust</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">'t Quel-stof komt van buyten <rhyme label="c" type="m">aen</rhyme>,</l>
        <l id="s4:l6" met="3" type="+-">Na de ding'haer <rhyme label="d" type="f">neygen</rhyme>;</l>
        <l id="s4:l7" met="4" type="+-">'t Quellen en in 't hert doen <rhyme label="c" type="m" corresp="#s4:l5">gaen</rhyme>,</l>
        <l id="s4:l8" met="3" type="+-">Heeft elck van zijn <rhyme label="d" type="f" corresp="#s4:l6">eygen</rhyme>.</l>
        <l id="s4:l9" met="2" type="+-">Zelden <rhyme label="e" type="m">tijdt</rhyme></l>
        <l id="s4:l10" met="2" type="+-">Zonder <rhyme label="e" type="m" corresp="#s4:l9">strijdt</rhyme></l>
        <l id="s4:l11" met="3" type="+-">Door u gantsche <rhyme label="f" type="f">leven</rhyme>.</l>
        <l id="s4:l12" met="2" type="+-">Altijdt <rhyme label="g" type="m">yet</rhyme></l>
        <l id="s4:l13" met="2" type="+-">Dat <rhyme label="g" type="m" corresp="#s4:l12">verdriet</rhyme></l>
        <l id="s4:l14" met="3" type="+-">En gequel kan <rhyme label="f" type="f" corresp="#s4:l11">geven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Zoeck het waer ghy kont en <rhyme label="a" type="m">wilt</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Wend het over alle <rhyme label="b" type="f">boegen</rhyme>;</l>
        <l id="s5:l3" met="4" type="+-">Isser innerlijck geen <rhyme label="a" type="m" corresp="#s5:l1">stilt</rhyme>:</l>
        <l id="s5:l4" met="4" type="+-">Altijdt blijfter <rhyme label="b" type="f" corresp="#s5:l2">ongenoegen</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">Zoo lang ghy bent die ghy <rhyme label="c" type="m">bent</rhyme>,</l>
        <l id="s5:l6" met="3" type="+-">('t Is vergeefs <rhyme label="d" type="f">om'-keken</rhyme>)</l>
        <l id="s5:l7" met="4" type="+-">Zal tot droefheydt en <rhyme label="c" type="m" corresp="#s5:l5">ellendt</rhyme></l>
        <l id="s5:l8" met="3" type="+-">Nimmer stof <rhyme label="d" type="f" corresp="#s5:l6">ontbreken</rhyme>.</l>
        <l id="s5:l9" met="2" type="+-">En of <rhyme label="e" type="m">wel</rhyme></l>
        <l id="s5:l10" met="2" type="+-">In 't <rhyme label="e" type="m" corresp="#s5:l9">gequel</rhyme></l>
        <l id="s5:l11" met="3" type="+-">Blickt een <rhyme label="f" type="f">zonne-schijntje</rhyme>:</l>
        <l id="s5:l12" met="2" type="+-">'t Zet geen <rhyme label="g" type="m">bloedt</rhyme>:</l>
        <l id="s5:l13" met="2" type="+-">In 't <rhyme label="g" type="m" corresp="#s5:l12">gemoedt</rhyme></l>
        <l id="s5:l14" met="3" type="+-">Schuylt het schalck <rhyme label="f" type="f" corresp="#s5:l11">venijntje</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">'t Hert, in Deuchdt noch koudt noch <rhyme label="a" type="m">heet</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Zaedt zich niet aen's vleyschs <rhyme label="b" type="f">vermaken</rhyme>;</l>
        <l id="s6:l3" met="4" type="+-">Oock, door feyl van goedt <rhyme label="a" type="m" corresp="#s6:l1">Geweet</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Kan het Godes gunst niet <rhyme label="b" type="f" corresp="#s6:l2">smaken</rhyme>:</l>
        <l id="s6:l5" met="4" type="+-">Dit geeft in de ziel <rhyme label="c" type="m">onlust</rhyme>;</l>
        <l id="s6:l6" met="3" type="+-">Onlust maeckt <rhyme label="d" type="f">kleyn-zeerigh</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">Licht-geraeckt, los, <rhyme label="c" type="m" corresp="#s6:l5">ongerust</rhyme>,</l>
        <l id="s6:l8" met="3" type="+-">Quellijck <rhyme label="d" type="f" corresp="#s6:l6">murmurerigh</rhyme>.</l>
        <l id="s6:l9" met="2" type="+-">Uyt die <rhyme label="e" type="m">grondt</rhyme></l>
        <l id="s6:l10" met="2" type="+-">Koomt de <rhyme label="e" type="m" corresp="#s6:l9">wondt</rhyme></l>
        <l id="s6:l11" met="3" type="+-">Daer moest quael <rhyme label="f" type="f">genezen</rhyme>.</l>
        <l id="s6:l12" met="2" type="+-">Zal 't recht <rhyme label="g" type="m">deegh</rhyme>,</l>
        <l id="s6:l13" met="2" type="+-">'t Hert moet <rhyme label="g" type="m" corresp="#s6:l12">leegh</rhyme></l>
        <l id="s6:l14" met="3" type="+-">Van zijn Lofheydt <rhyme label="f" type="f" corresp="#s6:l11">wezen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

    <date>
      <year-start>1861</year-start>
      <year-end>1861</year-end>
    </date>
    <tags>
      <tag standard-name="kinderlied" translation="children's song">kinderlied</tag>
      <tag standard-name="meilied" translation="May song">meilied</tag>
    </tags>
    <melody/>
    <categories>
      <category translation="seasons and annual events">jaarkring</category>
      <category translation="children">kinderen</category>
    </categories>
  <author>Jan Pieter Heije</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Zeg, kindren! hebt gij 't al <rhyme label="a" type="m">gehoord</rhyme>?</l>
        <l id="s1:l2" met="3" type="-+">De Lente is weêr <rhyme label="b" type="f">verschenen</rhyme>!</l>
        <l id="s1:l3" met="4" type="-+">Zij joeg den boozen Winter <rhyme label="a" type="m" corresp="#s1:l1">voort</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En grommend trok hij <rhyme label="b" type="f" corresp="#s1:l2">henen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Nu strooit ze bloempjes hier en <rhyme label="a" type="m">daar</rhyme></l>
        <l id="s2:l2" met="3" type="-+">En leert de vogels <rhyme label="b" type="f">kwelen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En roept de kinders bij <rhyme label="a" type="m" corresp="#s2:l1">elkaâr</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Om lustig weêr te <rhyme label="b" type="f" corresp="#s2:l2">spelen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Kijk! hoe de beestjes ginds en <rhyme label="a" type="m">hier</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Nu zingen en nu <rhyme label="b" type="f">springen</rhyme>; -</l>
        <l id="s3:l3" met="4" type="-+">Me dunkt, we moesten voor <rhyme label="a" type="m" corresp="#s3:l1">plêzier</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Nu ook een liedje <rhyme label="b" type="f" corresp="#s3:l2">zingen</rhyme>: -</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">o Lieve Lente! wees <rhyme label="a" type="m">gegroet</rhyme></l>
        <l id="s4:l2" met="3" type="-+">En leer ons, als we u <rhyme label="b" type="f">prijzen</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Voor 't goede, dat men aan ons <rhyme label="a" type="m" corresp="#s4:l1">doet</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Den Schepper dank <rhyme label="b" type="f" corresp="#s4:l2">bewijzen</rhyme>!</l>
      </lg>
    </lg>
  </text>
</song>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">EEnich Soon van Godt den <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Ons hebdy bemint te <rhyme label="a" type="m" corresp="#s1:l1">seer</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Ghebt voor ons ghenomen <rhyme label="b" type="m">aen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Het wesen van u <rhyme label="c" type="f">knechten</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Om' ons van de hel t' <rhyme label="b" type="m" corresp="#s1:l3">ontslaen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Tot u ons op te <rhyme label="c" type="f" corresp="#s1:l4">rechten</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">'K sien bedroeft u tot de <rhyme label="a" type="m">doodt</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Seer u vanden bloede <rhyme label="a" type="m" corresp="#s2:l1">root</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Dat gh' ebt in den hof <rhyme label="b" type="m">ghesweet</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Benaut daer boven <rhyme label="c" type="f">maten</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Doen den gheest wel stont <rhyme label="b" type="m" corresp="#s2:l3">bereet</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Maer 't vleesch was cranck <rhyme label="c" type="f" corresp="#s2:l4">ghelaten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Ick sien u ghebonden <rhyme label="a" type="m">staen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">U de krijchslie sien ick <rhyme label="a" type="m" corresp="#s3:l1">staen</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Met een al te wreet <rhyme label="b" type="m">ghemoedt</rhyme></l>
        <l id="s3:l4" met="3" type="-+">'Tvleesch rucken van de <rhyme label="c" type="f">beenen</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Dat ghy sijpte van het <rhyme label="b" type="m" corresp="#s3:l3">bloedt</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Wie sal dit niet <rhyme label="c" type="f" corresp="#s3:l4">beweenen</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Ick sien u een dorne <rhyme label="a" type="m">croon</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Daer m' u mede brenght ten <rhyme label="a" type="m" corresp="#s4:l1">thoon</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">In u hooft seer diep <rhyme label="b" type="m">gheplant</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Dat ick het bloedt sien <rhyme label="c" type="f">loopen</rhyme></l>
        <l id="s4:l5" met="4" type="+-">Op u aenschijn t' <rhyme label="b" type="m" corresp="#s4:l3">allekant</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Om ons wel dier te <rhyme label="c" type="f" corresp="#s4:l4">coopen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Ick sien draghen u een <rhyme label="a" type="m">Cruys</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Onder een seer quaet <rhyme label="a" type="m" corresp="#s5:l1">ghespuys</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">'K sien u verven met u <rhyme label="b" type="m">bloedt</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Die moeyelijcke <rhyme label="c" type="f">weghen</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">'Tis wel een versteent <rhyme label="b" type="m" corresp="#s5:l3">ghemoedt</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Dat dit niet sal <rhyme label="c" type="f" corresp="#s5:l4">beweghen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">'Ksien dat m' u ruckt uyt u <rhyme label="a" type="m">kleedt</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">(Tot de cruyssingh nu <rhyme label="a" type="m" corresp="#s6:l1">bereet</rhyme>)</l>
        <l id="s6:l3" met="4" type="+-">Dat was in u wonden <rhyme label="b" type="m">vast</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Die ick sien seer weer <rhyme label="c" type="f">bloeien</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Waer op niet en wert <rhyme label="b" type="m" corresp="#s6:l3">ghepast</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Hoe seer men die sagh <rhyme label="c" type="f" corresp="#s6:l4">vloeien</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">'Ksien dat m'u op 't Cruys seer <rhyme label="a" type="m">reckt</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">'Teen lidt uyt het ander <rhyme label="a" type="m" corresp="#s7:l1">treckt</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">En met naghels hand' en <rhyme label="b" type="m">voet</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Doorslaet met wonder <rhyme label="c" type="f">smerten</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">En weer stort u dierbaer <rhyme label="b" type="m" corresp="#s7:l3">bloedt</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Weeght dit versteende <rhyme label="c" type="f" corresp="#s7:l4">herten</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">An het Cruys ghestorven <rhyme label="a" type="m">nu</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Sien ick al te deerlijck <rhyme label="a" type="m" corresp="#s8:l1">u</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">'K sien Longinus u de <rhyme label="b" type="m">zy</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Daer met sijn sperr' <rhyme label="c" type="f">doorsteken</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Waer uyt bloedt en water <rhyme label="b" type="m" corresp="#s8:l3">hy</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Trock, als ghescheyde <rhyme label="c" type="f" corresp="#s8:l4">beken</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Brenght ons, Heer, tot 'hoochste <rhyme label="a" type="m">goedt</rhyme></l>
        <l id="s9:l2" met="4" type="+-">Door 't vergieten van u <rhyme label="a" type="m" corresp="#s9:l1">bloedt</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Laet dat dalen op ons <rhyme label="b" type="m">hert</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Print daer in u vijf <rhyme label="c" type="f">wonden</rhyme>,</l>
        <l id="s9:l5" met="4" type="+-">doet ons voelen all' u <rhyme label="b" type="m" corresp="#s9:l3">smert</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Gheleden voor ons <rhyme label="c" type="f" corresp="#s9:l4">sonden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

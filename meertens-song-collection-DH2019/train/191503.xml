  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">MAria suyver <rhyme label="a" type="m">Maeght</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Heeft naer een plaets <rhyme label="a" type="m" corresp="#s1:l1">gevraeght</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Waer in zy rusten <rhyme label="b" type="m">sou</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Verstijft van <rhyme label="b" type="m" corresp="#s1:l3">kou</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Maer neen de plaets en wasser <rhyme label="c" type="m">niet</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Voor die alles dwinght als een <rhyme label="c" type="m" corresp="#s1:l5">riet</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">De werelt vindt sy heel <rhyme label="d" type="m">besmet</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">Met Afgoden dienst <rhyme label="d" type="m" corresp="#s1:l7">beset</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">De Maget van stonden <rhyme label="a" type="m">aen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Is in een stal <rhyme label="a" type="m" corresp="#s2:l1">gegaen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">En wordt daer Moeder <rhyme label="b" type="m">goedt</rhyme></l>
        <l id="s2:l4" met="2" type="-+">Van Jesus <rhyme label="b" type="m" corresp="#s2:l3">soet</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Een ider vol boosheyt <rhyme label="c" type="m">sot</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Verstoot hier zijnen eygen <rhyme label="c" type="m" corresp="#s2:l5">Godt</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Zijn eygen landt wordt hem <rhyme label="d" type="m">ontseyt</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">Als een ballingh wegh <rhyme label="d" type="m" corresp="#s2:l7">geleyt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Treckt dan uyt Herders <rhyme label="a" type="m">al</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Naer desen armen <rhyme label="a" type="m" corresp="#s3:l1">stal</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Daer't nieuw geboren <rhyme label="b" type="m">Kindt</rhyme></l>
        <l id="s3:l4" met="2" type="-+">Light in den <rhyme label="b" type="m" corresp="#s3:l3">windt</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Haest u en wilt niet langer <rhyme label="c" type="m">aensien</rhyme></l>
        <l id="s3:l6" met="4" type="-+">U soete jonste hem aen te <rhyme label="c" type="m" corresp="#s3:l5">bien</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Singht met genuchten heel <rhyme label="d" type="m">plaisant</rhyme></l>
        <l id="s3:l8" met="4" type="-+">Lof Jesus door het gansche <rhyme label="d" type="m" corresp="#s3:l7">landt</rhyme>.</l>
      </lg>
    </lg>
  </text>

    <melody>Trek herders naar de stal</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Guilielmus Bolognino</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">APostels rijck van <rhyme label="a" type="m">deught</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Allom gheloeft met <rhyme label="a" type="m" corresp="#s1:l1">vreucht</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Symon en Iuda <rhyme label="b" type="m">zijt</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Vermaert soo <rhyme label="b" type="m" corresp="#s1:l3">wijt</rhyme>,</l>
        <l id="s1:l5" met="5" type="-+">Den naem des Heeren wyt die hebt <rhyme label="c" type="m">verbreyt</rhyme>,</l>
        <l id="s1:l6" met="5" type="-+">En soo veel herten tot 't gheloof <rhyme label="c" type="m" corresp="#s1:l5">beleyt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">O wat al pijn en <rhyme label="a" type="m">moet</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Tot 't storten van u <rhyme label="a" type="m" corresp="#s2:l1">bloedt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">(Noot daer van hier <rhyme label="b" type="m">voldaen</rhyme>)</l>
        <l id="s2:l4" met="2" type="-+">Hebd' <rhyme label="b" type="m" corresp="#s2:l3">onderstaen</rhyme>.</l>
        <l id="s2:l5" met="5" type="-+">Om ziel te ghewinnen <rhyme label="c" type="m">overal</rhyme>,</l>
        <l id="s2:l6" met="5" type="-+">Te trecken uyt den brandt van 't vierich <rhyme label="c" type="m" corresp="#s2:l5">dal</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ghy hebt te gaer <rhyme label="a" type="m">verlicht</rhyme></l>
        <l id="s3:l2" met="3" type="-+">De Perssen, int <rhyme label="a" type="m" corresp="#s3:l1">ghesicht</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Hen Godt <rhyme label="b" type="m">ghebrocht</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">'t Gheloof in hen <rhyme label="b" type="m" corresp="#s3:l3">ghevrocht</rhyme>,</l>
        <l id="s3:l5" met="5" type="-+">Ghesticht hen door u seer volmaeckte <rhyme label="c" type="m">deught</rhyme>,</l>
        <l id="s3:l6" met="5" type="-+">Die u nu baert in Godt de hoochste <rhyme label="c" type="m" corresp="#s3:l5">vreught</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ten lesten, naer veel <rhyme label="a" type="m">moet</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Hebdy oock met u <rhyme label="a" type="m" corresp="#s4:l1">bloedt</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Verseghelt bey u <rhyme label="b" type="m">leer</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">Ghetrouw den <rhyme label="b" type="m" corresp="#s4:l3">Heer</rhyme>,</l>
        <l id="s4:l5" met="5" type="-+">Waer voor ghy draeght oock de verdiende <rhyme label="c" type="m">croon</rhyme>,</l>
        <l id="s4:l6" met="5" type="-+">En worpt die 't samen voor des Heeren <rhyme label="c" type="m" corresp="#s4:l5">throon</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Maer ons daer by doch <rhyme label="a" type="m">staet</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Weirt van ons alle <rhyme label="a" type="m" corresp="#s5:l1">quaet</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Hout ons in u <rhyme label="b" type="m">behoet</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">Verwinnen <rhyme label="b" type="m" corresp="#s5:l3">doet</rhyme>,</l>
        <l id="s5:l5" met="5" type="-+">Verwinnen 't vleesch, de werelt, 't helsch <rhyme label="c" type="m">ghewelt</rhyme>,</l>
        <l id="s5:l6" met="5" type="-+">In ons dat teghen Godt allom hem <rhyme label="c" type="m" corresp="#s5:l5">stelt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">INdien ghy kinders <rhyme label="a" type="m">teelt</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Maeckt dat Gods heyligh <rhyme label="a" type="m" corresp="#s1:l1">beelt</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Van jongs af haer <rhyme label="b" type="f">verciere</rhyme>.</l>
        <l id="s1:l4" met="3" type="-+">Leydt yder tot zijn <rhyme label="c" type="m">werk</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Maeckt van u Huys een <rhyme label="c" type="m" corresp="#s1:l4">Kerck</rhyme>.</l>
        <l id="s1:l6" met="3" type="-+">Wilt Sabbath-daegen <rhyme label="b" type="f" corresp="#s1:l3">viere</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Souckt voor u <rhyme label="a" type="m">huysgesin</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Geen boden om <rhyme label="a" type="m" corresp="#s2:l1">gewin</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Maer die den Heere <rhyme label="b" type="f">vreesen</rhyme>:</l>
        <l id="s2:l4" met="3" type="-+">Maeckt dat u knecht, en <rhyme label="c" type="m">kindt</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">U heyliglijck <rhyme label="c" type="m" corresp="#s2:l4">bemindt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Dan sult ghy zaeligh <rhyme label="b" type="f" corresp="#s2:l3">wesen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ghy Kindren, volght de <rhyme label="a" type="m">leer</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Van Vader, en geeft <rhyme label="a" type="m" corresp="#s3:l1">eer</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Aen Moeder: weest <rhyme label="b" type="f">geduldigh</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Als sy zijn oudt en <rhyme label="c" type="m">zwack</rhyme>;</l>
        <l id="s3:l5" met="3" type="-+">Geeft haer dan wat <rhyme label="c" type="m" corresp="#s3:l4">gemack</rhyme>:</l>
        <l id="s3:l6" met="3" type="-+">Denckt dat ghy dit zijt <rhyme label="b" type="f" corresp="#s3:l3">schuldigh</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ghy Dienstboden, weest <rhyme label="a" type="m">trouw</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Gehoorsaemt Heer en <rhyme label="a" type="m" corresp="#s4:l1">Vrouw</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Wilt nimmer tegen <rhyme label="b" type="f">streven</rhyme>.</l>
        <l id="s4:l4" met="3" type="-+">Bewaert u handt en <rhyme label="c" type="m">mondt</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Op dat ghy Gods <rhyme label="c" type="m" corresp="#s4:l4">verbondt</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Oock zalich moght <rhyme label="b" type="f" corresp="#s4:l3">beleven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

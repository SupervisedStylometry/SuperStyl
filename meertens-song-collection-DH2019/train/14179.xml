      <category translation="occasions">gelegenheden</category>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Frans vander Straten de jongere</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ICk roep tot u Schepper <rhyme label="a" type="m">mijn</rhyme>,</l>
        <l id="s1:l2" met="2" type="-+">Waer sal ick <rhyme label="a" type="m" corresp="#s1:l1">zijn</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Ic waer soo geern int beloefde <rhyme label="a" type="m" corresp="#s1:l1">lant</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">In u Rijcke <rhyme label="a" type="m" corresp="#s1:l1">playsant</rhyme>,</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Het Lant heb ick van verre <rhyme label="a" type="m">gesien</rhyme>,</l>
        <l id="s2:l2" met="2" type="-+">Mocht icker in <rhyme label="a" type="m" corresp="#s2:l1">vlien</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Dat waer mijn lust by u te <rhyme label="a" type="m" corresp="#s2:l1">zijn</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">O Heere <rhyme label="a" type="m" corresp="#s2:l1">mijn</rhyme>,</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">De vrucht des Lants, alsomen <rhyme label="a" type="m">leest</rhyme>,</l>
        <l id="s3:l2" met="2" type="-+">Al inden <rhyme label="a" type="m" corresp="#s3:l1">Gheest</rhyme>.</l>
        <l id="s3:l3" met="4" type="-+">Compt laet ons eten <rhyme label="a" type="m" corresp="#s3:l1">onbeureest</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">In des Heeren <rhyme label="a" type="m" corresp="#s3:l1">Feest</rhyme>,</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Een eewige vreucht met blijden <rhyme label="a" type="m">gesanck</rhyme>,</l>
        <l id="s4:l2" met="2" type="-+">Een eewige <rhyme label="a" type="m" corresp="#s4:l1">danck</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Sal daer op gaen een vrolick <rhyme label="a" type="m" corresp="#s4:l1">gheclanck</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">Inder eewicheyt <rhyme label="a" type="m" corresp="#s4:l1">lanck</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Veel vreucht en blyschap <rhyme label="a" type="m">blydelijck</rhyme>,</l>
        <l id="s5:l2" met="2" type="-+">In <rhyme label="a" type="m" corresp="#s5:l1">Hemelrijck</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Sullen sy aenschouwen <rhyme label="a" type="m" corresp="#s5:l1">eewelijck</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">Sy den Heere <rhyme label="a" type="m" corresp="#s5:l1">gelijck</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Mijn hert verlanghet also <rhyme label="a" type="m">seer</rhyme>,</l>
        <l id="s6:l2" met="2" type="-+">O lieve <rhyme label="a" type="m" corresp="#s6:l1">Heer</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Hout my doch vast al in u <rhyme label="a" type="m" corresp="#s6:l1">Leer</rhyme>,</l>
        <l id="s6:l4" met="2" type="-+">Dat is mijn <rhyme label="a" type="m" corresp="#s6:l1">begeer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Als ick dencken om het eewige <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s7:l2" met="2" type="-+">Dan heb ick <rhyme label="a" type="m" corresp="#s7:l1">moet</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Als ick ghedencke Gods liefde <rhyme label="a" type="m" corresp="#s7:l1">soet</rhyme>,</l>
        <l id="s7:l4" met="2" type="-+">Wat hy ons <rhyme label="a" type="m" corresp="#s7:l1">doet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">De wille des Heeren moet <rhyme label="a" type="m">gheschien</rhyme>,</l>
        <l id="s8:l2" met="2" type="-+">Aenhoort goe <rhyme label="a" type="m" corresp="#s8:l1">Lien</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Alsoot de Heere heeft <rhyme label="a" type="m" corresp="#s8:l1">voorsien</rhyme>,</l>
        <l id="s8:l4" met="2" type="-+">Wilt daer in <rhyme label="a" type="m" corresp="#s8:l1">verblien</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Al die volstandich blijven <rhyme label="a" type="m">schoon</rhyme>,</l>
        <l id="s9:l2" met="2" type="-+">Die sullen Gods <rhyme label="a" type="m" corresp="#s9:l1">Soon</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Aenschouwen in des Hemels <rhyme label="a" type="m" corresp="#s9:l1">Throon</rhyme>,</l>
        <l id="s9:l4" met="2" type="-+">Dat is haer <rhyme label="a" type="m" corresp="#s9:l1">loon</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Adieu mijn alderliefste <rhyme label="a" type="m">Vrau</rhyme>,</l>
        <l id="s10:l2" met="2" type="-+">En maeckt gheen <rhyme label="a" type="m" corresp="#s10:l1">rau</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Op dat ick v by den Heere <rhyme label="a" type="m" corresp="#s10:l1">aenschau</rhyme>,</l>
        <l id="s10:l4" met="2" type="-+">En blijft <rhyme label="a" type="m" corresp="#s10:l1">ghetrau</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Wil yemant singen dit simpel <rhyme label="a" type="m">Liet</rhyme>,</l>
        <l id="s11:l2" met="2" type="-+">Die moet met <rhyme label="a" type="m" corresp="#s11:l1">vliet</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Al inden geest oock zijn <rhyme label="a" type="m" corresp="#s11:l1">verblijt</rhyme>,</l>
        <l id="s11:l4" met="2" type="-+">Of een is al <rhyme label="a" type="m" corresp="#s11:l1">niet</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Noch eens beveel ick u den <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s12:l2" met="2" type="-+">Op dit pas niet <rhyme label="a" type="m" corresp="#s12:l1">meer</rhyme>.</l>
        <l id="s12:l3" met="4" type="-+">Houdet u vast aen Christus <rhyme label="a" type="m" corresp="#s12:l1">Leer</rhyme>,</l>
        <l id="s12:l4" met="2" type="-+">Dat is mijn <rhyme label="a" type="m" corresp="#s12:l1">begheer</rhyme>,</l>
      </lg>
    </lg>
  </text>
</song>

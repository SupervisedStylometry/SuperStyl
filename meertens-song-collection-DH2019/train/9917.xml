      <category translation="religion">godsdienst</category>
    </categories>
  <author>Karel van Mander</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Menschen <rhyme label="a" type="m">excellent</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Die in zonden zijt <rhyme label="a" type="m" corresp="#s1:l1">verblent</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Wilt u beteren <rhyme label="b" type="m">saen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Tot Godt u sinnen <rhyme label="a" type="m" corresp="#s1:l1">wendt</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Doet penitentie <rhyme label="a" type="m" corresp="#s1:l1">jent</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Schreyt met berouwighen <rhyme label="b" type="m" corresp="#s1:l3">traen</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Soo Petrus heeft <rhyme label="b" type="m" corresp="#s1:l3">ghedaen</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Wilt u zonden <rhyme label="c" type="m">belien</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Met den <rhyme label="b" type="m" corresp="#s1:l3">Publicaen</rhyme></l>
        <l id="s1:l10" met="3" type="-+">Wilt bidden om <rhyme label="b" type="m" corresp="#s1:l3">ghenaen</rhyme></l>
        <l id="s1:l11" met="3" type="+-">Tot Godt tsal u <rhyme label="c" type="m" corresp="#s1:l8">gheschien</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Neerstelijck met der <rhyme label="a" type="m">spoet</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Doet penitentie <rhyme label="a" type="m" corresp="#s2:l1">goet</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Want het Rijck der Hemelen <rhyme label="b" type="m">naeckt</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Als die vijf Maechden <rhyme label="a" type="m" corresp="#s2:l1">vroet</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Oly in u lampen <rhyme label="a" type="m" corresp="#s2:l1">doet</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Dat is liefde die niet en <rhyme label="b" type="m" corresp="#s2:l3">laeckt</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Maer neerstich bidt en <rhyme label="b" type="m" corresp="#s2:l3">waeckt</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Om gaen ter bruyloft <rhyme label="c" type="m">soet</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Altijt in liefden <rhyme label="b" type="m" corresp="#s2:l3">blaeckt</rhyme>,</l>
        <l id="s2:l10" met="3" type="-+">In zonden niet meer en <rhyme label="b" type="m" corresp="#s2:l3">vaeckt</rhyme>,</l>
        <l id="s2:l11" met="3" type="+-">Blijft in der liefden <rhyme label="c" type="m" corresp="#s2:l8">gloet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Salich wort elcken <rhyme label="a" type="m">knecht</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Soo ons Lucas uyt <rhyme label="a" type="m" corresp="#s3:l1">leght</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Die wakende sal <rhyme label="b" type="m">zijn</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Als den Heere comt vol <rhyme label="a" type="m" corresp="#s3:l1">cecht</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Soo de Schriftuere <rhyme label="a" type="m" corresp="#s3:l1">seght</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Dus waeckt sonder <rhyme label="b" type="m" corresp="#s3:l3">ghepijn</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">End' in alle deuchden <rhyme label="b" type="m" corresp="#s3:l3">fijn</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Doch den Heere <rhyme label="c" type="m">verwacht</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Hy sal, verstaet wel <rhyme label="b" type="m" corresp="#s3:l3">mijn</rhyme>,</l>
        <l id="s3:l10" met="3" type="-+">Comen voor u <rhyme label="b" type="m" corresp="#s3:l3">aenschijn</rhyme>,</l>
        <l id="s3:l11" met="3" type="+-">Als een dief in der <rhyme label="c" type="m" corresp="#s3:l8">nacht</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Keert u tot my <rhyme label="a" type="m">eenpaer</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Spreeckt Godt die Heere <rhyme label="a" type="m" corresp="#s4:l1">daer</rhyme>:</l>
        <l id="s4:l3" met="3" type="-+">In waken end' schreyen <rhyme label="b" type="m">leeft</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Scheurt uwe herte <rhyme label="a" type="m" corresp="#s4:l1">claer</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Niet uwe cleederen, <rhyme label="a" type="m" corresp="#s4:l1">maer</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Wt liefden aelmoessen <rhyme label="b" type="m" corresp="#s4:l3">gheeft</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">End' alle deught <rhyme label="b" type="m" corresp="#s4:l3">aencleeft</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Uwen Naesten by <rhyme label="c" type="m">staet</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">In zonden niet meer en <rhyme label="b" type="m" corresp="#s4:l3">sneeft</rhyme>,</l>
        <l id="s4:l10" met="3" type="-+">Maer weent, sucht, ende <rhyme label="b" type="m" corresp="#s4:l3">beeft</rhyme>,</l>
        <l id="s4:l11" met="3" type="+-">Over al die zonden <rhyme label="c" type="m" corresp="#s4:l8">quaet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Oorlof, die't hebt <rhyme label="a" type="m">ghehoort</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Te samen in <rhyme label="a" type="m" corresp="#s5:l1">accoort</rhyme>.</l>
        <l id="s5:l3" met="3" type="-+">Nu al in liefden <rhyme label="b" type="m">rijst</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Wilt leven <rhyme label="a" type="m" corresp="#s5:l1">onghestoort</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Al nae des Heeren <rhyme label="a" type="m" corresp="#s5:l1">woort</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">End' uwen vyandt <rhyme label="b" type="m" corresp="#s5:l3">spijst</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Wie u leet doet oft <rhyme label="b" type="m" corresp="#s5:l3">verknijst</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Zijt niet in gramschap <rhyme label="c" type="m">groot</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">Barmherticheyt <rhyme label="b" type="m" corresp="#s5:l3">bewijst</rhyme>,</l>
        <l id="s5:l10" met="3" type="-+">In 't lijden u <rhyme label="b" type="m" corresp="#s5:l3">verjolijst</rhyme>,</l>
        <l id="s5:l11" met="3" type="+-">Wt reynder liefden <rhyme label="c" type="m" corresp="#s5:l8">minioot</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

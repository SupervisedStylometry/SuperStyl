  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Den mensch hebt gy geschapen <rhyme label="a" type="m">reyn</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Naer u behagen <rhyme label="b" type="m">goet</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Ghy zegent hem hier in 't <rhyme label="a" type="m" corresp="#s1:l1">gemeyn</rhyme></l>
        <l id="s1:l4" met="3" type="-+">In volle <rhyme label="b" type="m" corresp="#s1:l2">overvloet</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Wilt met u geest begaven <rhyme label="c" type="m">schoon</rhyme>,</l>
        <l id="s1:l6" met="5" type="-+">Dit Ionge Paer uyt uwen hoogen <rhyme label="c" type="m" corresp="#s1:l5">throon</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ghy Bruydegom bemint <rhyme label="a" type="m">oprecht</rhyme></l>
        <l id="s2:l2" met="3" type="-+">U Lief, u waerde <rhyme label="b" type="m">Vrouw</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Aen wien ghy nu zijt vast <rhyme label="a" type="m" corresp="#s2:l1">gehecht</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Door wettelijcke <rhyme label="b" type="m" corresp="#s2:l2">Trouw</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Leyt haer in deught, met vreughden <rhyme label="c" type="m">voort</rhyme>,</l>
        <l id="s2:l6" met="5" type="-+">En bindt u beyde aen Gods Heyligh <rhyme label="c" type="m" corresp="#s2:l5">Woort</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">En ghy Vrou Bruyt weest oock <rhyme label="a" type="m">bereyt</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Voldoet u reyne <rhyme label="b" type="m">plicht</rhyme></l>
        <l id="s3:l3" met="4" type="-+">En toont u man <rhyme label="a" type="m" corresp="#s3:l1">gehoorsaemheyt</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">U kinders <rhyme label="b" type="m" corresp="#s3:l2">onderricht</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">En leyt haer in Gods vreese <rhyme label="c" type="m">fijn</rhyme>,</l>
        <l id="s3:l6" met="5" type="-+">Soo sult ghy oock van hem gesegent <rhyme label="c" type="m" corresp="#s3:l5">zijn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Wy wenschen u dan tot <rhyme label="a" type="m">besluyt</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Des Heeren heyl'gen <rhyme label="b" type="m">vreed</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Al 't geen wat soet en lieflijck <rhyme label="a" type="m" corresp="#s4:l1">luyt</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Dat wenschen wy u <rhyme label="b" type="m" corresp="#s4:l2">meed</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Al wat u tot den Hemel <rhyme label="c" type="m">leyt</rhyme></l>
        <l id="s4:l6" met="5" type="-+">Dat sy by u tot in der <rhyme label="c" type="m" corresp="#s4:l5">eeuwigheyt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

    <melody>Het voer een scheepje over Rijn</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Albertus Buitendyck</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">IOseph, die men rechtveerdigh <rhyme label="a" type="m">noemt</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Iacob de Meerder hoog <rhyme label="a" type="m" corresp="#s1:l1">beroemt</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Sijn Soonen van <rhyme label="b" type="f">Alphoeus</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">En Simon <rhyme label="c" type="m">van</rhyme></l>
        <l id="s1:l5" met="2" type="-+">De Stadt <rhyme label="c" type="m" corresp="#s1:l4">Chanan</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Ende Iudas <rhyme label="b" type="f" corresp="#s1:l3">Thaddoeus</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Den lof van Simon en <rhyme label="a" type="m">Thadee</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Den lof van de'es Apost'len <rhyme label="a" type="m" corresp="#s2:l1">twee</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Wilt heden al <rhyme label="b" type="f">aen-hooren</rhyme></l>
        <l id="s2:l4" met="2" type="-+">Tot Godes <rhyme label="c" type="m">eer</rhyme>.</l>
        <l id="s2:l5" met="2" type="-+">Na mijn <rhyme label="c" type="m" corresp="#s2:l4">begeer</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Verleent nu wat uw' <rhyme label="b" type="f" corresp="#s2:l3">ooren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Sint' Simon vroom en <rhyme label="a" type="m">onbevreest</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Sint' Simon met Elias <rhyme label="a" type="m" corresp="#s3:l1">geest</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Reyst na <rhyme label="b" type="f">d'Egyptenaren</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">Om Godes <rhyme label="c" type="m">Wet</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Godts leeringh <rhyme label="c" type="m" corresp="#s3:l4">net</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Aen haer te <rhyme label="b" type="f" corresp="#s3:l3">openbaren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Dit Volck by dagh, en nachten <rhyme label="a" type="m">leert</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Dit Volck verblindt tot Godt <rhyme label="a" type="m" corresp="#s4:l1">bekeert</rhyme>.</l>
        <l id="s4:l3" met="3" type="-+">In Dorpen ende <rhyme label="b" type="f">Steden</rhyme></l>
        <l id="s4:l4" met="2" type="-+">Hebben Goods <rhyme label="c" type="m">naem</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Lof, eer en <rhyme label="c" type="m" corresp="#s4:l4">faem</rhyme></l>
        <l id="s4:l6" met="3" type="-+">In 't openbaer <rhyme label="b" type="f" corresp="#s4:l3">beleden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">'T Mesopotamiaensche <rhyme label="a" type="m">Landt</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Heeft Iudas Thaddeus <rhyme label="a" type="m" corresp="#s5:l1">beplant</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Met d'alderwaerste <rhyme label="b" type="f">bloemen</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">Schoon van <rhyme label="c" type="m">koleur</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">Soeter van <rhyme label="c" type="m" corresp="#s5:l4">geur</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Die wy Christenen <rhyme label="b" type="f" corresp="#s5:l3">noemen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Uyt landen veel heeft 't <rhyme label="a" type="m">ongeloof</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Satans buyt, bedrogh, ende <rhyme label="a" type="m" corresp="#s6:l1">roof</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">En blindheyt groot <rhyme label="b" type="f">verdreven</rhyme>.</l>
        <l id="s6:l4" met="2" type="-+">Een waerde <rhyme label="c" type="m">brief</rhyme></l>
        <l id="s6:l5" met="2" type="-+">Tot ons <rhyme label="c" type="m" corresp="#s6:l4">gerief</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Heeft 't Haddeus <rhyme label="b" type="f" corresp="#s6:l3">geschreven</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Als dese Helden vroom <rhyme label="a" type="m">verstaen</rhyme></l>
        <l id="s7:l2" met="4" type="-+">d' Afgodery vande <rhyme label="a" type="m" corresp="#s7:l1">Persiaen</rhyme>;</l>
        <l id="s7:l3" met="3" type="-+">Sy beyde tot haer <rhyme label="b" type="f">komen</rhyme>,</l>
        <l id="s7:l4" met="2" type="-+">Sy spreken <rhyme label="c" type="m">daer</rhyme></l>
        <l id="s7:l5" met="2" type="-+">In 't <rhyme label="c" type="m" corresp="#s7:l4">openbaer</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Geen pijnen, geen doot <rhyme label="b" type="f" corresp="#s7:l3">schromen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Dit Volck door haer worden <rhyme label="a" type="m">gesticht</rhyme>;</l>
        <l id="s8:l2" met="4" type="-+">Tot Godes kennis zijn <rhyme label="a" type="m" corresp="#s8:l1">verlicht</rhyme>.</l>
        <l id="s8:l3" met="3" type="-+">Als Sonnen twee zy <rhyme label="b" type="f">scheenen</rhyme>.</l>
        <l id="s8:l4" met="2" type="-+">Den Persch eerst <rhyme label="c" type="m">blindt</rhyme>,</l>
        <l id="s8:l5" met="2" type="-+">Sijn dolingh <rhyme label="c" type="m" corresp="#s8:l4">vindt</rhyme>;</l>
        <l id="s8:l6" met="3" type="-+">'t Heydendom is <rhyme label="b" type="f" corresp="#s8:l3">verdweenen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Mirak'len veel hebbe <rhyme label="a" type="m">gedaen</rhyme>;</l>
        <l id="s9:l2" met="4" type="-+">De Kreupelen door haer hulp <rhyme label="a" type="m" corresp="#s9:l1">gaen</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">De Siecke luy <rhyme label="b" type="f">geneesen</rhyme>.</l>
        <l id="s9:l4" met="2" type="-+">Al Satans <rhyme label="c" type="m">macht</rhyme>,</l>
        <l id="s9:l5" met="2" type="-+">Toovenaers <rhyme label="c" type="m" corresp="#s9:l4">kraght</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Door de'es twee moete <rhyme label="b" type="f" corresp="#s9:l3">vreesen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">De gewenste Martelaers <rhyme label="a" type="m">krans</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Wiens alderschoonste roode <rhyme label="a" type="m" corresp="#s10:l1">glans</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Noch klaerheyt zal <rhyme label="b" type="f">verdwijnen</rhyme>,</l>
        <l id="s10:l4" met="2" type="-+">Ontfangen <rhyme label="c" type="m">zy</rhyme>.</l>
        <l id="s10:l5" met="2" type="-+">Van harten <rhyme label="c" type="m" corresp="#s10:l4">bly</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Lijden de swaerste <rhyme label="b" type="f" corresp="#s10:l3">pijnen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

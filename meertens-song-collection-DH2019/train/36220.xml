  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">Maeght hoogh <rhyme label="a" type="m">ghehacht</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Seer rijpelijck <rhyme label="a" type="m" corresp="#s1:l1">bedacht</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Syn wy hier Maeghden onder <rhyme label="b" type="m">een</rhyme>;</l>
        <l id="s1:l4" met="3" type="+-">Wy h'en u <rhyme label="a" type="m" corresp="#s1:l1">ghebracht</rhyme></l>
        <l id="s1:l5" met="4" type="+-">Eenen Mey al in't <rhyme label="b" type="m" corresp="#s1:l3">ghemeen</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Compt buyten, siet spruyten, de blaederen <rhyme label="c" type="m">groen</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">De Meyen verscheyen, vermaecken <rhyme label="c" type="m" corresp="#s1:l6">t'saisoen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Elck hout, dat <rhyme label="a" type="m">draeght</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Syn groenheyt, die <rhyme label="a" type="m" corresp="#s2:l1">behaeght</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Door syn  groen bladt veel in't <rhyme label="b" type="m">ghetal</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">D'aerd oock niet en <rhyme label="a" type="m" corresp="#s2:l1">traeght</rhyme></l>
        <l id="s2:l5" met="4" type="+-">In haer groenheydt over <rhyme label="b" type="m" corresp="#s2:l3">al</rhyme>;</l>
        <l id="s2:l6" met="4" type="-+">De cruyen, die duyen wt bloemmekens <rhyme label="c" type="m">nu</rhyme></l>
        <l id="s2:l7" met="4" type="+-">Compt kyken t'sal blijcken, aen den Mey voor <rhyme label="c" type="m" corresp="#s2:l6">u</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Soo hy nu <rhyme label="a" type="m">staet</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Hy t'al te boven <rhyme label="a" type="m" corresp="#s3:l1">gaet</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Sy vrucht die leeft, en leven <rhyme label="b" type="m">doet</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">T'is den Mey van <rhyme label="a" type="m" corresp="#s3:l1">baet</rhyme></l>
        <l id="s3:l5" met="4" type="+-">Want wt hem compt alle <rhyme label="b" type="m" corresp="#s3:l3">goet</rhyme>;</l>
        <l id="s3:l6" met="4" type="-+">Verloren, te voren, was desen Mey <rhyme label="c" type="m">schoon</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Maer heden, door reden, compt hy weer ten <rhyme label="c" type="m" corresp="#s3:l6">toon</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Soo dat ter <rhyme label="a" type="m">handt</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Nu is dien schoonen <rhyme label="a" type="m" corresp="#s4:l1">pant</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">T'cruys daer me Godt eens was <rhyme label="b" type="m">gelaen</rhyme>;</l>
        <l id="s4:l4" met="3" type="+-">T'gloeyt van allen <rhyme label="a" type="m" corresp="#s4:l1">cant</rhyme></l>
        <l id="s4:l5" met="4" type="+-">T'helich bloet hanght noch daer <rhyme label="b" type="m" corresp="#s4:l3">aen</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Wy vlechten, en hechten, hem blomkens <rhyme label="c" type="m">stout</rhyme></l>
        <l id="s4:l7" met="4" type="+-">Sy bloeyen, en groeyen, ghenoech in het <rhyme label="c" type="m" corresp="#s4:l6">wout</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Lof Maeghet <rhyme label="a" type="m">fyn</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Compt hier al daer wy <rhyme label="a" type="m" corresp="#s5:l1">syn</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Compt wilt aenschouwen desen <rhyme label="b" type="m">Mey</rhyme>;</l>
        <l id="s5:l4" met="3" type="+-">Syt ghy hier in <rhyme label="a" type="m" corresp="#s5:l1">pijn</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Droevich, treurich, in <rhyme label="b" type="m" corresp="#s5:l3">gheschrey</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">U lyden, u strijden, sal hier me <rhyme label="c" type="m">vergaen</rhyme></l>
        <l id="s5:l7" met="4" type="+-">Vriendinne, uyt minne, wilt hem nu <rhyme label="c" type="m" corresp="#s5:l6">ontfaen</rhyme>.</l>
      </lg>
    </lg>
  </text>

    <melody>Aanhoor o God van Israel</melody>
    <categories>
      <category translation="seasons and annual events">jaarkring</category>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">UErnieut v inden gheest wie dat ghi <rhyme label="a" type="m">zijt</rhyme></l>
        <l id="s1:l2" met="3" type="-+">In desen bequamen <rhyme label="a" type="m" corresp="#s1:l1">tijt</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Met Abraham werst <rhyme label="a" type="m" corresp="#s1:l1">verblijt</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Wilt v als nv <rhyme label="b" type="f">veriubileren</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Met Isaac en Iacob trect in het <rhyme label="a" type="m" corresp="#s1:l1">crijt</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Uoort Christen ghelooue <rhyme label="a" type="m" corresp="#s1:l1">strijt</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Onder Gods banieren v <rhyme label="a" type="m" corresp="#s1:l1">beurijt</rhyme></l>
        <l id="s1:l8" met="4" type="-+">Met Christum wilt v <rhyme label="b" type="f" corresp="#s1:l4">veraccorderen</rhyme></l>
        <l id="s1:l9" met="3" type="-+">Uolcht Petrus <rhyme label="c" type="m">transpoort</rhyme></l>
        <l id="s1:l10" met="3" type="-+">Paulus leeringhe nv <rhyme label="c" type="m" corresp="#s1:l9">aenhoort</rhyme></l>
        <l id="s1:l11" met="3" type="+-">Met Timotheum maeckt <rhyme label="c" type="m" corresp="#s1:l9">accoort</rhyme></l>
        <l id="s1:l12" met="3" type="-+">Inden gheest wilt <rhyme label="d" type="f">leuen</rhyme></l>
        <l id="s1:l13" met="6" type="-+">Dat soete nieuwe Iaer is ons van Godt <rhyme label="d" type="f" corresp="#s1:l12">gegeuen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Christus is den wijnstock <rhyme label="a" type="m">soet</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Die aenden cruyce <rhyme label="a" type="m" corresp="#s2:l1">stoet</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Hy verloste ons met zijn <rhyme label="a" type="m" corresp="#s2:l1">bloet</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Wilt alleen op hem <rhyme label="b" type="f">betrouwen</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Hy heeft doorbroocken dat helsche <rhyme label="a" type="m" corresp="#s2:l1">gloet</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Ons sondich <rhyme label="a" type="m" corresp="#s2:l1">ghebroet</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Daert al om steruen <rhyme label="a" type="m" corresp="#s2:l1">moet</rhyme></l>
        <l id="s2:l8" met="4" type="-+">Het si mannen ofte <rhyme label="b" type="f" corresp="#s2:l4">vrouwen</rhyme></l>
        <l id="s2:l9" met="3" type="-+">Wilt Christum volghen <rhyme label="c" type="m">saen</rhyme></l>
        <l id="s2:l10" met="3" type="-+">Soo Stephanus heeft <rhyme label="c" type="m" corresp="#s2:l9">ghedaen</rhyme></l>
        <l id="s2:l11" met="3" type="+-">Den moordenaer heeft rust <rhyme label="c" type="m" corresp="#s2:l9">ontfaen</rhyme></l>
        <l id="s2:l12" met="3" type="-+">Opt recht berou van zijn sondich <rhyme label="d" type="f">leuen</rhyme></l>
        <l id="s2:l13" met="6" type="-+">Dat soete nieuwe Iaer is ons van Godt <rhyme label="d" type="f" corresp="#s2:l12">gegeuen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Een yeghelijc treck tcleet van <rhyme label="a" type="m">ootmoetaen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Met druck met meighen <rhyme label="a" type="m" corresp="#s3:l1">traen</rhyme></l>
        <l id="s3:l3" met="3" type="-+">U sondich leuen wilt <rhyme label="a" type="m" corresp="#s3:l1">afgaen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Wilt v al tot Godt <rhyme label="b" type="f">bekeeren</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Hy is die onse sonden heeft <rhyme label="a" type="m" corresp="#s3:l1">wtghedaen</rhyme></l>
        <l id="s3:l6" met="3" type="-+">En liet hem aent cruyce <rhyme label="a" type="m" corresp="#s3:l1">slaen</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Met zijn armen wijt <rhyme label="a" type="m" corresp="#s3:l1">ontdaen</rhyme></l>
        <l id="s3:l8" met="4" type="-+">Sijnen lof wilt altijts <rhyme label="b" type="f" corresp="#s3:l4">vermeeren</rhyme></l>
        <l id="s3:l9" met="3" type="-+">Tot ootmoedicheyt v <rhyme label="c" type="m">keert</rhyme></l>
        <l id="s3:l10" met="3" type="-+">So ons Paulus oock <rhyme label="c" type="m" corresp="#s3:l9">leert</rhyme></l>
        <l id="s3:l11" met="3" type="+-">En des Heeren lof <rhyme label="c" type="m" corresp="#s3:l9">vermeert</rhyme></l>
        <l id="s3:l12" met="3" type="-+">Elck wil dit <rhyme label="d" type="f">aencleuen</rhyme></l>
        <l id="s3:l13" met="6" type="-+">Dat soete nieuwe Iaer is ons van Godt <rhyme label="d" type="f" corresp="#s3:l12">gegeuen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Hoort toe ghi Cristen creatueren al <rhyme label="a" type="m">gemeyn</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Groot ende daer toe <rhyme label="a" type="m" corresp="#s4:l1">cleijn</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Compt tot dat leuende water <rhyme label="a" type="m" corresp="#s4:l1">reyn</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Om niet sal hijt v <rhyme label="b" type="f">gheuen</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Christus is de claer suyuer <rhyme label="a" type="m" corresp="#s4:l1">fonteyn</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Hy spreeckt in shemels <rhyme label="a" type="m" corresp="#s4:l1">pleyn</rhyme></l>
        <l id="s4:l7" met="3" type="-+">By sinen Uader <rhyme label="a" type="m" corresp="#s4:l1">certeyn</rhyme></l>
        <l id="s4:l8" met="4" type="-+">Hy is warachtich den wech en <rhyme label="b" type="f" corresp="#s4:l4">leuen</rhyme></l>
        <l id="s4:l9" met="3" type="-+">Onser alder <rhyme label="c" type="m">Aduocaet</rhyme></l>
        <l id="s4:l10" met="3" type="-+">Ghelijck daer ghescreuen <rhyme label="c" type="m" corresp="#s4:l9">staet</rhyme></l>
        <l id="s4:l11" met="3" type="+-">Ons warachtich <rhyme label="c" type="m" corresp="#s4:l9">aflaet</rhyme></l>
        <l id="s4:l12" met="3" type="-+">Seer claer <rhyme label="d" type="f">beseuen</rhyme></l>
        <l id="s4:l13" met="6" type="-+">Dat soete nieuwe Iaer is ons van Godt <rhyme label="d" type="f" corresp="#s4:l12">gegeuen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Laet ons tot den stoel der genaden <rhyme label="a" type="m">saen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Na Paulus <rhyme label="a" type="m" corresp="#s5:l1">vermaen</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Om bermherticheyt te <rhyme label="a" type="m" corresp="#s5:l1">ontfaen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Stout en onbeureest nv <rhyme label="b" type="f">treden</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Christus ons bisschop is ten hemel <rhyme label="a" type="m" corresp="#s5:l1">ghegaen</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Hy weet hoe wy zijn <rhyme label="a" type="m" corresp="#s5:l1">belaen</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Dus wilt hy ons <rhyme label="a" type="m" corresp="#s5:l1">beraen</rhyme></l>
        <l id="s5:l8" met="4" type="-+">Met Olie der <rhyme label="b" type="f" corresp="#s5:l4">bermherticheden</rhyme></l>
        <l id="s5:l9" met="3" type="-+">Heeft hy ons comen <rhyme label="c" type="m">dwaen</rhyme></l>
        <l id="s5:l10" met="3" type="-+">Hy en wilt ons niet <rhyme label="c" type="m" corresp="#s5:l9">versmaen</rhyme></l>
        <l id="s5:l11" met="3" type="+-">Hy bidt om ons <rhyme label="c" type="m" corresp="#s5:l9">bystaen</rhyme></l>
        <l id="s5:l12" met="3" type="-+">Uoor sinen vader <rhyme label="d" type="f">verheuen</rhyme></l>
        <l id="s5:l13" met="6" type="-+">Dat soete nieuwe Iaer is ons van Godt <rhyme label="d" type="f" corresp="#s5:l12">gegeuen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Prince met alle Apostelen <rhyme label="a" type="m">ient</rhyme></l>
        <l id="s6:l2" met="3" type="-+">En Propheten <rhyme label="a" type="m" corresp="#s6:l1">excelent</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Timmert op dat <rhyme label="a" type="m" corresp="#s6:l1">fondament</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Dat is Christus den hoecksteen <rhyme label="b" type="f">ghepresen</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Soo blijft die timmeringhe vroom <rhyme label="a" type="m" corresp="#s6:l1">ongeschent</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Paulus wooorden wel <rhyme label="a" type="m" corresp="#s6:l1">inprent</rhyme></l>
        <l id="s6:l7" met="3" type="-+">En den heylighen gheest <rhyme label="a" type="m" corresp="#s6:l1">bekent</rhyme></l>
        <l id="s6:l8" met="4" type="-+">Sult ghy tot eenen tempel <rhyme label="b" type="f" corresp="#s6:l4">wesen</rhyme></l>
        <l id="s6:l9" met="3" type="-+">Worpt den ouden Adam <rhyme label="c" type="m">van</rhyme></l>
        <l id="s6:l10" met="3" type="-+">En doet den deeuwen <rhyme label="c" type="m" corresp="#s6:l9">an</rhyme></l>
        <l id="s6:l11" met="3" type="+-">Uolcht Christus wijf en <rhyme label="c" type="m" corresp="#s6:l9">man</rhyme></l>
        <l id="s6:l12" met="3" type="-+">Soo en dorst ghy niet <rhyme label="d" type="f">beuen</rhyme></l>
        <l id="s6:l13" met="6" type="-+">Dat soete nieuwe Iaer is ons van God <rhyme label="d" type="f" corresp="#s6:l12">gegeuen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

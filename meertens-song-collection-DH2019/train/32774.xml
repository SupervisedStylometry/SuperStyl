  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="5" type="-+">COmt heylich Gheest, o Heer Godt <rhyme label="a" type="f">almachtich</rhyme>,</l>
        <l id="s1:l2" met="2" type="+-">Eeuwich <rhyme label="b" type="m">licht</rhyme>,</l>
        <l id="s1:l3" met="5" type="+-">Schiet uwe stralen in ons seer <rhyme label="a" type="f" corresp="#s1:l1">crachtich</rhyme>,</l>
        <l id="s1:l4" met="2" type="+-">Ende <rhyme label="b" type="m" corresp="#s1:l2">sticht</rhyme>,</l>
        <l id="s1:l5" met="2" type="+-">Door u <rhyme label="b" type="m" corresp="#s1:l2">schicht</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">In ons zielen den <rhyme label="c" type="m">brandt</rhyme></l>
        <l id="s1:l7" met="4" type="+-">Der liefden Godts, aen <rhyme label="c" type="m" corresp="#s1:l6">allekant</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="5" type="-+">Die met vierighe tonghen quaemt <rhyme label="a" type="f">dalen</rhyme></l>
        <l id="s2:l2" met="2" type="+-">Windich <rhyme label="b" type="m">snel</rhyme>,</l>
        <l id="s2:l3" met="5" type="+-">En de d' Apostelen alle <rhyme label="a" type="f" corresp="#s2:l1">talen</rhyme></l>
        <l id="s2:l4" met="2" type="+-">Spreecken <rhyme label="b" type="m" corresp="#s2:l2">wel</rhyme>;</l>
        <l id="s2:l5" met="2" type="+-">Mijn op <rhyme label="b" type="m" corresp="#s2:l2">stel</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Wilt, aensien, ende <rhyme label="c" type="m">doet</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">My spreken uwen lof seer <rhyme label="c" type="m" corresp="#s2:l6">soet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="5" type="-+">Met den Vader zijt ghy Godt <rhyme label="a" type="f">gepresen</rhyme>,</l>
        <l id="s3:l2" met="2" type="+-">En den <rhyme label="b" type="m">Soon</rhyme>,</l>
        <l id="s3:l3" met="5" type="+-">Even machtich, ghelijck in het <rhyme label="a" type="f" corresp="#s3:l1">wesen</rhyme></l>
        <l id="s3:l4" met="2" type="+-">Even <rhyme label="b" type="m" corresp="#s3:l2">schoon</rhyme>;</l>
        <l id="s3:l5" met="2" type="+-">Die <rhyme label="b" type="m" corresp="#s3:l2">persoon</rhyme>;</l>
        <l id="s3:l6" met="3" type="-+">Is verscheyden <rhyme label="c" type="m">alleen</rhyme>;</l>
        <l id="s3:l7" met="4" type="+-">Het wesen is in dry maer <rhyme label="c" type="m" corresp="#s3:l6">een</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="5" type="-+">Ghy sijt den Troon der droevige <rhyme label="a" type="f">menschen</rhyme>,</l>
        <l id="s4:l2" met="2" type="+-">Salve <rhyme label="b" type="m">reyn</rhyme>,</l>
        <l id="s4:l3" met="5" type="+-">Een gave daer de sielen naer <rhyme label="a" type="f" corresp="#s4:l1">wenschen</rhyme></l>
        <l id="s4:l4" met="2" type="+-">Claer <rhyme label="b" type="m" corresp="#s4:l2">Fonteyn</rhyme></l>
        <l id="s4:l5" met="2" type="+-">Een <rhyme label="b" type="m" corresp="#s4:l2">ghemeyn</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Oorspronck van alle <rhyme label="c" type="m">deught</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Ende goedt, dat de siel <rhyme label="c" type="m" corresp="#s4:l6">verheught</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="5" type="-+">Vlammende vier, comt ons herte <rhyme label="a" type="f">verwermen</rhyme></l>
        <l id="s5:l2" met="2" type="+-">Dat is <rhyme label="b" type="m">cout</rhyme>:</l>
        <l id="s5:l3" met="5" type="+-">Suyver het wel, en wilt <rhyme label="a" type="f" corresp="#s5:l1">t'beschermen</rhyme></l>
        <l id="s5:l4" met="2" type="+-">Dat niet en <rhyme label="b" type="m" corresp="#s5:l2">flout</rhyme>,</l>
        <l id="s5:l5" met="2" type="+-">Daer in <rhyme label="b" type="m" corresp="#s5:l2">bout</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Een liefde alsoo <rhyme label="c" type="m">groot</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Die verwint de seer felle <rhyme label="c" type="m" corresp="#s5:l6">doodt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="5" type="-+">O soete vrient; lieve gast der <rhyme label="a" type="f">zielen</rhyme>,</l>
        <l id="s6:l2" met="2" type="+-">Komt te <rhyme label="b" type="m">baet</rhyme></l>
        <l id="s6:l3" met="5" type="+-">Die voor u throon seer ootmoedigh <rhyme label="a" type="f" corresp="#s6:l1">knielen</rhyme>,</l>
        <l id="s6:l4" met="2" type="+-">Adams <rhyme label="b" type="m" corresp="#s6:l2">saet</rhyme>,</l>
        <l id="s6:l5" met="2" type="+-">Alle <rhyme label="b" type="m" corresp="#s6:l2">quaet</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Drijft uyt der herten <rhyme label="c" type="m">sael</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">Ende woont daer in <rhyme label="c" type="m" corresp="#s6:l6">t'eenemael</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="5" type="-+">Schenckt ons, o Heere, uwe seven <rhyme label="a" type="f">gaven</rhyme></l>
        <l id="s7:l2" met="2" type="+-"><rhyme label="b" type="m">Mildelijck</rhyme>,</l>
        <l id="s7:l3" met="5" type="+-">En doet ons schip seylen in de <rhyme label="a" type="f" corresp="#s7:l1">haven</rhyme></l>
        <l id="s7:l4" met="2" type="+-">Van u <rhyme label="b" type="m" corresp="#s7:l2">rijck</rhyme>:</l>
        <l id="s7:l5" met="2" type="+-">Weest <rhyme label="b" type="m" corresp="#s7:l2">ghelijck</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Een soeten wint in <rhyme label="c" type="m">zee</rhyme>,</l>
        <l id="s7:l7" met="4" type="+-">Die geringh jaeght in s'hemels <rhyme label="c" type="m" corresp="#s7:l6">stee</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="5" type="-+">Lof sy ghejont den Vader, en <rhyme label="a" type="f">Sone</rhyme>,</l>
        <l id="s8:l2" met="2" type="+-">Onsen <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s8:l3" met="5" type="+-">Heylighen Gheest in des Hemels <rhyme label="a" type="f" corresp="#s8:l1">troone</rhyme></l>
        <l id="s8:l4" met="2" type="+-">V sy <rhyme label="b" type="m" corresp="#s8:l2">eer</rhyme>,</l>
        <l id="s8:l5" met="2" type="+-">Even <rhyme label="b" type="m" corresp="#s8:l2">seer</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Lof inder <rhyme label="c" type="m">eeuwicheydt</rhyme>,</l>
        <l id="s8:l7" met="4" type="+-">Sy gheseydt de <rhyme label="c" type="m" corresp="#s8:l6">Drijvuldigheydt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

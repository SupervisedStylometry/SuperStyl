    <tags/>
    <melody>Come posso io morir</melody>
  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Wantrou, en heb ik <rhyme label="a" type="m">niet</rhyme>;</l>
        <l id="s1:l2" met="2" type="-+">Maer zouk te <rhyme label="b" type="f">sterken</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Mijn roup, zoo Petrus <rhyme label="a" type="m" corresp="#s1:l1">hiet</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Met goede <rhyme label="b" type="f" corresp="#s1:l2">werken</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Midd’ler tijd hoop en <rhyme label="c" type="m">vrees</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Ik d’alderlaetsten <rhyme label="d" type="f">morgen</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Nae’k vind’ en <rhyme label="c" type="m" corresp="#s1:l5">leez</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Met Christelikke <rhyme label="d" type="f" corresp="#s1:l6">zorgen</rhyme>.</l>
        <l id="s1:l9" met="3" type="-+">Onzalig <rhyme label="e" type="m">Hugenot</rhyme>!</l>
        <l id="s1:l10" met="2" type="-+">Van re’en <rhyme label="f" type="f">vergeten</rhyme>.</l>
        <l id="s1:l11" met="3" type="+-">Voorwaer den Hemel <rhyme label="e" type="m" corresp="#s1:l9">spot</rhyme></l>
        <l id="s1:l12" met="2" type="-+">Met uw’ <rhyme label="f" type="f" corresp="#s1:l10">vermeten</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Het uitverkoren <rhyme label="a" type="m">Vat</rhyme></l>
        <l id="s2:l2" met="2" type="-+">Kastijdt zijn <rhyme label="b" type="f">leden</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Nae zoo veel deugds, op <rhyme label="a" type="m" corresp="#s2:l1">dat</rhyme></l>
        <l id="s2:l4" met="2" type="-+">Hem uit zijn <rhyme label="b" type="f" corresp="#s2:l2">stede</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Niet verstoten en <rhyme label="c" type="m">zou</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Den afgrond van <rhyme label="d" type="f">genade</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">Om lust, of <rhyme label="c" type="m" corresp="#s2:l5">rou</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Van vleessige <rhyme label="d" type="f" corresp="#s2:l6">misdaden</rhyme>.</l>
        <l id="s2:l9" met="3" type="-+">En ghy zoo snoden <rhyme label="e" type="m">jagt</rhyme>,</l>
        <l id="s2:l10" met="2" type="-+">Vol op van <rhyme label="f" type="f">zonden</rhyme>,</l>
        <l id="s2:l11" met="3" type="+-">U kitteldt dat ghy <rhyme label="e" type="m" corresp="#s2:l9">lacht</rhyme></l>
        <l id="s2:l12" met="2" type="-+">Met open <rhyme label="f" type="f" corresp="#s2:l10">monden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">De zulke steeldt en <rhyme label="a" type="m">rooft</rhyme>,</l>
        <l id="s3:l2" met="2" type="-+">Al om <rhyme label="b" type="f">quaed-aerdig</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Die evenwel <rhyme label="a" type="m" corresp="#s3:l1">gelooft</rhyme></l>
        <l id="s3:l4" met="2" type="-+">Te zijn <rhyme label="b" type="f" corresp="#s3:l2">rechtvaerdig</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Veer was van dezen <rhyme label="c" type="m">rom</rhyme>:</l>
        <l id="s3:l6" met="3" type="-+">‘Ken ‘ken mijn zelfs niet <rhyme label="d" type="f">schuldig</rhyme></l>
        <l id="s3:l7" met="2" type="-+">Maer ben <rhyme label="c" type="m" corresp="#s3:l5">daerom</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Rechtvaerdig noch <rhyme label="d" type="f" corresp="#s3:l6">eenvuldig</rhyme>.</l>
        <l id="s3:l9" met="3" type="-+">Gedachtig datter <rhyme label="e" type="m">staet</rhyme>:</l>
        <l id="s3:l10" met="2" type="-+">Noit sulken <rhyme label="f" type="f">waerde</rhyme>,</l>
        <l id="s3:l11" met="3" type="+-">Die zeker liefd’ of <rhyme label="e" type="m" corresp="#s3:l9">haet</rhyme></l>
        <l id="s3:l12" met="2" type="-+">Was, opder <rhyme label="f" type="f" corresp="#s3:l10">aerde</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">De hoop maekt ons dan <rhyme label="a" type="m">bly</rhyme>,</l>
        <l id="s4:l2" met="2" type="-+">Die niet <rhyme label="b" type="f">beschamen</rhyme></l>
        <l id="s4:l3" met="3" type="-+">En zal, zoo lang als <rhyme label="a" type="m" corresp="#s4:l1">wy</rhyme></l>
        <l id="s4:l4" met="2" type="-+">Slechts naer <rhyme label="b" type="f" corresp="#s4:l2">betamen</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Door de gracy <rhyme label="c" type="m">ontfaen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Vereenigt staen met <rhyme label="d" type="f">Gode</rhyme>;</l>
        <l id="s4:l7" met="2" type="-+">En vlijtig <rhyme label="c" type="m" corresp="#s4:l5">gaen</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Door ’t pad van zijn <rhyme label="d" type="f" corresp="#s4:l6">geboden</rhyme>.</l>
        <l id="s4:l9" met="3" type="-+">Dat dan de Christen <rhyme label="e" type="m">Doop</rhyme></l>
        <l id="s4:l10" met="2" type="-+">Zich t’allen <rhyme label="f" type="f">tijden</rhyme>,</l>
        <l id="s4:l11" met="3" type="+-">Doch tusschen vrees en <rhyme label="e" type="m" corresp="#s4:l9">hoop</rhyme>.</l>
        <l id="s4:l12" met="2" type="-+">Te recht <rhyme label="f" type="f" corresp="#s4:l10">verblijde</rhyme>.</l>
      </lg>
    </lg>
  </text>

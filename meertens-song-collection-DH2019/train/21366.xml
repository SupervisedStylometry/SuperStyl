<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>21366</id>
    <date>
      <year-start>1591</year-start>
      <year-end>1592</year-end>
    </date>
    <tags>
      <tag standard-name="schriftuurlijk lied" translation="scripture song">schriftuurlijk lied</tag>
      <tag standard-name="vermaanlied" translation="admonitory song">vermaanlied</tag>
    </tags>
    <melody>Schoon liefje jent zeer excellent</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Soetken Gerijts</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">GHenade vrede wensch ick v <rhyme label="a" type="m">seer</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Voor een groet wilt <rhyme label="b" type="f">ghedencken</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Mijn lieue suster in den <rhyme label="a" type="m" corresp="#s1:l1">Heer</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Ick moet nae v <rhyme label="a" type="m" corresp="#s1:l1">begheer</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Oock wt oude kennis <rhyme label="a" type="m" corresp="#s1:l1">meer</rhyme></l>
        <l id="s1:l6" met="3" type="-+">V nu een liet gaen <rhyme label="b" type="f" corresp="#s1:l2">schencken</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Tis nu een prijckeloosen <rhyme label="a" type="m">tijt</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Laet ons toch stijf <rhyme label="b" type="f">aenhouden</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Dat wy die liefde niet werden <rhyme label="a" type="m" corresp="#s2:l1">quijt</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Die by veel menschen nu <rhyme label="a" type="m" corresp="#s2:l1">slijt</rhyme></l>
        <l id="s2:l5" met="3" type="-+">O Heer <rhyme label="a" type="m" corresp="#s2:l1">ghebenedijt</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Dat wy niet en <rhyme label="b" type="f" corresp="#s2:l2">vercouden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Den lauwen wil godt wtspouwen <rhyme label="a" type="m">claer</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Lieue suster so wy <rhyme label="b" type="f">weten</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Laet ons wel toe sien <rhyme label="a" type="m" corresp="#s3:l1">allegaer</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Dat ons licht, licht <rhyme label="a" type="m" corresp="#s3:l1">openbaer</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Die dwase maechden <rhyme label="a" type="m" corresp="#s3:l1">haer</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Laet ons dat niet <rhyme label="b" type="f" corresp="#s3:l2">vergeeten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Hebben wy geen liefde och suster <rhyme label="a" type="m">siet</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Wilt Paulus <rhyme label="b" type="f">aenmercken</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Wat is ons nut, siet hy <rhyme label="a" type="m" corresp="#s4:l1">bediet</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Sonder liefde ist al <rhyme label="a" type="m" corresp="#s4:l1">niet</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Al deden wy met <rhyme label="a" type="m" corresp="#s4:l1">vliet</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Menichuuldich goede <rhyme label="b" type="f" corresp="#s4:l2">wercken</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Maer blijuen wy in gods liefde <rhyme label="a" type="m">reyn</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Gheestelijck wilt <rhyme label="b" type="f">hooren</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Dat is het leuen en vrede <rhyme label="a" type="m" corresp="#s5:l1">pleyn</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Al is ons vermoghen <rhyme label="a" type="m" corresp="#s5:l1">cleyn</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Goetwillicheyt <rhyme label="a" type="m" corresp="#s5:l1">alleyn</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Wil Godt aen ons <rhyme label="b" type="f" corresp="#s5:l2">bespooren</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Die liefde ghelooft hoopt lijdet <rhyme label="a" type="m">al</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">En dat in dese <rhyme label="b" type="f">dinghen</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Wat godt belooft heeft dat en <rhyme label="a" type="m" corresp="#s6:l1">sal</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Niet falgeeren groot en <rhyme label="a" type="m" corresp="#s6:l1">smal</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Dit doet int aertsche <rhyme label="a" type="m" corresp="#s6:l1">dal</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Door denge poorte <rhyme label="b" type="f" corresp="#s6:l2">dringhen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Wie metterliefde is <rhyme label="a" type="m">bereyt</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Die sal Godt wel <rhyme label="b" type="f">behaghen</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Die liefde verblijt haer in geen quaet <rhyme label="a" type="m" corresp="#s7:l1">feyt</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Sy verhuecht van die <rhyme label="a" type="m" corresp="#s7:l1">waerheyt</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Sy en laet haer hoort <rhyme label="a" type="m" corresp="#s7:l1">bescheyt</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Niet verdrieten noch <rhyme label="b" type="f" corresp="#s7:l2">vertregen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Laet ons waecken tot allen <rhyme label="a" type="m">stont</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Ick wil mijn liet haest <rhyme label="b" type="f">enden</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Bidt voor malcanderen wt herten <rhyme label="a" type="m" corresp="#s8:l1">gront</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Blijuen in Christus <rhyme label="a" type="m" corresp="#s8:l1">verbont</rhyme></l>
        <l id="s8:l5" met="3" type="-+">So werden wy <rhyme label="a" type="m" corresp="#s8:l1">ghesont</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Hier nae van ons <rhyme label="b" type="f" corresp="#s8:l2">ellenden</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Mijn lieue suster neemt dit in <rhyme label="a" type="m">danck</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Nu weest den heer <rhyme label="b" type="f">beuolen</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Laet ons toesien dat wy blijuen een <rhyme label="a" type="m" corresp="#s9:l1">ranck</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Aen den wijnstock hoort mijn <rhyme label="a" type="m" corresp="#s9:l1">sanck</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Christus leuen <rhyme label="a" type="m" corresp="#s9:l1">lanck</rhyme></l>
        <l id="s9:l6" met="3" type="-+">So en sullen wy niet <rhyme label="b" type="f" corresp="#s9:l2">doolen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

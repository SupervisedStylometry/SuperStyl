<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>187236</id>
    <date>
      <year-start>1794</year-start>
      <year-end>1794</year-end>
    </date>
    <tags/>
    <melody>Exaltons et chantons</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Heil en vreugd! - heil en <rhyme label="a" type="m">vreugd</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Zy uw deel, ô <rhyme label="b" type="f">Echtelingen</rhyme>!</l>
        <l id="s1:l3" met="4" type="+-">Heil en vreugd! - heil en <rhyme label="a" type="m" corresp="#s1:l1">vreugd</rhyme>!</l>
        <l id="s1:l4" met="4" type="+-">Zy het loon van uwe <rhyme label="a" type="m" corresp="#s1:l1">deugd</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Nimmer treffe u ramp of <rhyme label="a" type="m">druk</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Nimmer doe u kommer <rhyme label="b" type="f">zwoegen</rhyme>;</l>
        <l id="s2:l3" met="4" type="+-">Maar een ongestoord <rhyme label="a" type="m" corresp="#s2:l1">geluk</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Vergezelle uw huwlyks <rhyme label="a" type="m" corresp="#s2:l1">juk</rhyme>!</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Welk een goed - welk een <rhyme label="a" type="m">zoet</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Zal uw deugdzaam harte <rhyme label="b" type="f">smaaaken</rhyme>!</l>
        <l id="s3:l3" met="4" type="+-">Neen, 't verdriet - kent men <rhyme label="a" type="m" corresp="#s3:l1">niet</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Waar de liefde 't hart <rhyme label="a" type="m" corresp="#s3:l1">gebiedt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Haast moogt gy - zy' aan <rhyme label="a" type="m">zy'</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Een lief, aartig wichtjen <rhyme label="b" type="f">streelen</rhyme>;</l>
        <l id="s4:l3" met="4" type="+-">Leeft in rust - leeft in <rhyme label="a" type="m" corresp="#s4:l1">vrêe</rhyme>!</l>
        <l id="s4:l4" met="4" type="+-">Lang leef 't Paar! Hoezéé! <rhyme label="a" type="m" corresp="#s4:l1">Hoezéé</rhyme>!</l>
      </lg>
    </lg>
  </text>
</song>

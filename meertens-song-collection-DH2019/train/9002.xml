    <melody>Erhalt uns Herr bei deinem Wort</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ER houdt ons HEER by dijnen <rhyme label="a" type="m">Woord'</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">End keer des Paus end Turcken <rhyme label="a" type="m" corresp="#s1:l1">moort</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Die JEsum Christum dijnen <rhyme label="b" type="m">Soon</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Stooten willen wt synen <rhyme label="b" type="m" corresp="#s1:l3">Throon</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Bewijs dijn Macht HEEr JEsu <rhyme label="a" type="m">Christ</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Ghy die HEEr aller Heeren <rhyme label="a" type="m" corresp="#s2:l1">bist</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Bescherm dijn arme <rhyme label="b" type="m">Christenheyt</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Dat sy dy Loven in <rhyme label="b" type="m" corresp="#s2:l3">Eewicheyt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Godt heylig' Gheest ghy Trooster <rhyme label="a" type="m">weerd'</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Geeft dijn Volck eenderley sin' op <rhyme label="a" type="m" corresp="#s3:l1">Eerd'</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Staet by ons in der laetsten <rhyme label="b" type="m">Noot</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Leyd' ons int Leven wt den <rhyme label="b" type="m" corresp="#s3:l3">Doot</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Haer Aenslaeg' Heer te niete <rhyme label="a" type="m">maeck</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Laetse raecken haer boose <rhyme label="a" type="m" corresp="#s4:l1">saeck</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">End stootse in die Grave hen <rhyme label="b" type="m">in</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Die sy maecken den Christen <rhyme label="b" type="m" corresp="#s4:l3">dijn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">So sullen sy bekennen <rhyme label="a" type="m">doch</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Dat ghy ons HEEr Godt Levet <rhyme label="a" type="m" corresp="#s5:l1">noch</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">End helpt ghewaldich dijner <rhyme label="b" type="m">Schaer</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Die haer op dy verlaten <rhyme label="b" type="m" corresp="#s5:l3">gaer</rhyme>.</l>
      </lg>
    </lg>
  </text>

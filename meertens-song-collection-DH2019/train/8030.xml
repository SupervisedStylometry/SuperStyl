  <author>Jan Jansz. Deutel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="6" type="+-">GHebenedijt, o mijn ziel altijdt den <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s1:l2" met="5" type="-+">Looft hem, o alle mijn <rhyme label="b" type="m">inwendigheyt</rhyme>,</l>
        <l id="s1:l3" met="6" type="+-">Prijst hem met blijde Lof-sanghen altijdt <rhyme label="a" type="m" corresp="#s1:l1">meer</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Die u in sijn weghen <rhyme label="b" type="m" corresp="#s1:l2">leyt</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Door sijn <rhyme label="b" type="m" corresp="#s1:l2">ghenadigheyt</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Sijn beloften <rhyme label="b" type="m" corresp="#s1:l2">toeseyt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="6" type="+-">Maect groot, o mijn ziele, den Heere uwen <rhyme label="a" type="m">God</rhyme>,</l>
        <l id="s2:l2" met="5" type="-+">Die u uyt Egipten, tot Zyon heeft <rhyme label="b" type="m">gheleyt</rhyme>,</l>
        <l id="s2:l3" met="6" type="+-">Die u leyt tot Christum, van Babels Herders <rhyme label="a" type="m" corresp="#s2:l1">sot</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">In Israels groene <rhyme label="b" type="m" corresp="#s2:l2">weydt</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Van Babels dorre <rhyme label="b" type="m" corresp="#s2:l2">heyt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">O ziel' sijn lof <rhyme label="b" type="m" corresp="#s2:l2">verbreydt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="6" type="+-">Hoe soudt ghy, o ziel, niet loven sulcken <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s3:l2" met="5" type="-+">Die u van den doodt tot den leven heeft <rhyme label="b" type="m">gebrocht</rhyme>,</l>
        <l id="s3:l3" met="6" type="+-">Die u geleyt heeft door dat roode <rhyme label="a" type="m" corresp="#s3:l1">Meer</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Doen ghy dwaelde, <rhyme label="b" type="m" corresp="#s3:l2">wedersocht</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Met sijnen bloedt <rhyme label="b" type="m" corresp="#s3:l2">ghekocht</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Doen Pharao u <rhyme label="b" type="m" corresp="#s3:l2">bevocht</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="6" type="+-">Looft onsen Godt met Mose, o mijn <rhyme label="a" type="m">ziel</rhyme>,</l>
        <l id="s4:l2" met="5" type="-+">Die u tot sijn heylighe wooningh' heeft <rhyme label="b" type="m">gebracht</rhyme>,</l>
        <l id="s4:l3" met="6" type="+-">Die Pharao met ros ende waghens <rhyme label="a" type="m" corresp="#s4:l1">overviel</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">In 't rood' Meyr omwierp met <rhyme label="b" type="m" corresp="#s4:l2">kracht</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Doen hy vervolghd' <rhyme label="b" type="m" corresp="#s4:l2">onsacht</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Dat Israels <rhyme label="b" type="m" corresp="#s4:l2">gheslacht</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="6" type="+-">Mijn ziel looft den Heere al u leven <rhyme label="a" type="m">langh</rhyme>,</l>
        <l id="s5:l2" met="5" type="-+">Looft hem met harpen ende met snaren <rhyme label="b" type="m">spel</rhyme>,</l>
        <l id="s5:l3" met="6" type="+-">De heyligen in Zyon loven hem met <rhyme label="a" type="m" corresp="#s5:l1">sangh</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Oock ghy borghers <rhyme label="b" type="m" corresp="#s5:l2">Israel</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Want in 't helsche <rhyme label="b" type="m" corresp="#s5:l2">ghequel</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Hem niemandt loven <rhyme label="b" type="m" corresp="#s5:l2">sel</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="6" type="+-">Looft desen Godt, o ghy herders van <rhyme label="a" type="m">Zyon</rhyme>,</l>
        <l id="s6:l2" met="5" type="-+">Looft hem, o alle sijn knechten groot en <rhyme label="b" type="m">kleyn</rhyme>,</l>
        <l id="s6:l3" met="6" type="+-">Looft hem, o alle sijn handtwercken <rhyme label="a" type="m" corresp="#s6:l1">schoon</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Principael o Zion <rhyme label="b" type="m" corresp="#s6:l2">greyn</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Ghy zijt Godts bruydt <rhyme label="b" type="m" corresp="#s6:l2">alleyn</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">O kleyn vergad'ringh <rhyme label="b" type="m" corresp="#s6:l2">reyn</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="6" type="+-">O Godt u lof is in u ghemeynte <rhyme label="a" type="m">alleen</rhyme>,</l>
        <l id="s7:l2" met="5" type="-+">Ten is niet schoon in der sondaren <rhyme label="b" type="m">mondt</rhyme>,</l>
        <l id="s7:l3" met="6" type="+-">V woordt is alleen in Ierusalem <rhyme label="a" type="m" corresp="#s7:l1">reen</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">V wet men in Zyon <rhyme label="b" type="m" corresp="#s7:l2">vondt</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Quijtscheldinghe van <rhyme label="b" type="m" corresp="#s7:l2">sond'</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Als men van 't quaedt af <rhyme label="b" type="m" corresp="#s7:l2">stondt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="6" type="+-">Wie soude alsulcken Godt niet loven <rhyme label="a" type="m">vro</rhyme>,</l>
        <l id="s8:l2" met="5" type="-+">Die Daniel verlost heeft uyt den leeuwen <rhyme label="b" type="m">mondt</rhyme>;</l>
        <l id="s8:l3" met="6" type="+-">Die met Sadrach, Mesach, en <rhyme label="a" type="m" corresp="#s8:l1">Abdenego</rhyme></l>
        <l id="s8:l4" met="4" type="+-">In den gloeyenden oven <rhyme label="b" type="m" corresp="#s8:l2">stondt</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Dat de vlamme haer niet <rhyme label="b" type="m" corresp="#s8:l2">verslondt</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Gheen brandt men aen haer <rhyme label="b" type="m" corresp="#s8:l2">vondt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="6" type="+-">Prijst Godt o Ierusalem en Zyon <rhyme label="a" type="m">teer</rhyme>,</l>
        <l id="s9:l2" met="5" type="-+">Die u deuren vast met grendelen <rhyme label="b" type="m">bewaert</rhyme>,</l>
        <l id="s9:l3" met="6" type="+-">Die u mueren opbout, die daer laghen <rhyme label="a" type="m" corresp="#s9:l1">neer</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Die den verstroyden <rhyme label="b" type="m" corresp="#s9:l2">vergaert</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Die om sijn naem <rhyme label="b" type="m" corresp="#s9:l2">vermaert</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Te Babel ghevaen <rhyme label="b" type="m" corresp="#s9:l2">waert</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="6" type="+-">Looft God die in sijn heyligen Tempel <rhyme label="a" type="m">woont</rhyme></l>
        <l id="s10:l2" met="5" type="-+">Hy is een al te vriendelijcken <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s10:l3" met="6" type="+-">Looft hem, die sijn uytvercorene <rhyme label="a" type="m" corresp="#s10:l1">croont</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">Die haer vroom stelden ter <rhyme label="b" type="m" corresp="#s10:l2">weer</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Een eeuwigh <rhyme label="b" type="m" corresp="#s10:l2">triumpheer</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Gheeft hy die houdt sijn <rhyme label="b" type="m" corresp="#s10:l2">leer</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="6" type="+-">Ghy Hemelen, ghy aerde, Godt doch den prijs <rhyme label="a" type="m">gheeft</rhyme>,</l>
        <l id="s11:l2" met="5" type="-+">Looft hem ghy Heydenen, die op der aerden <rhyme label="b" type="m">zijn</rhyme>,</l>
        <l id="s11:l3" met="6" type="+-">Het love hem alle wat adem <rhyme label="a" type="m" corresp="#s11:l1">heeft</rhyme>,</l>
        <l id="s11:l4" met="4" type="+-">Sonne, Mane Sterren <rhyme label="b" type="m" corresp="#s11:l2">fijn</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Lovet Godt met helder <rhyme label="b" type="m" corresp="#s11:l2">schijn</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Dat sijn de wercken <rhyme label="b" type="m" corresp="#s11:l2">dijn</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="6" type="+-">O God, laet mijn ziel leven, dats' u loven <rhyme label="a" type="m">mach</rhyme>,</l>
        <l id="s12:l2" met="5" type="-+">Laet u lof van mijn lippen zijn <rhyme label="b" type="m">vertelt</rhyme>,</l>
        <l id="s12:l3" met="6" type="+-">Op dat ick mach staen blijven in den boosen <rhyme label="a" type="m" corresp="#s12:l1">dach</rhyme></l>
        <l id="s12:l4" met="4" type="+-">Als dat Elemente <rhyme label="b" type="m" corresp="#s12:l2">smelt</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">Heyligh moeten wy zijn <rhyme label="b" type="m" corresp="#s12:l2">ghestelt</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Gheen onschult daer en <rhyme label="b" type="m" corresp="#s12:l2">ghelt</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="6" type="+-">Ghy Princen en Heeren, Regents der <rhyme label="a" type="m">duysternis</rhyme></l>
        <l id="s13:l2" met="5" type="-+">Lovet Godt die u 'tsweert der justitien heeft <rhyme label="b" type="m">gedaen</rhyme>,</l>
        <l id="s13:l3" met="6" type="+-">Lovet hem, die een Heer over Vorsten <rhyme label="a" type="m" corresp="#s13:l1">is</rhyme>,</l>
        <l id="s13:l4" met="4" type="+-">Leert den goeden voor te <rhyme label="b" type="m" corresp="#s13:l2">staen</rhyme>,</l>
        <l id="s13:l5" met="3" type="-+">Straft den quaedt-doenders <rhyme label="b" type="m" corresp="#s13:l2">saen</rhyme>,</l>
        <l id="s13:l6" met="3" type="-+">Daerom hebdy 'tsweerdt <rhyme label="b" type="m" corresp="#s13:l2">ontfaen</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="6" type="+-">O Prince Godt, Heer aller Heeren <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s14:l2" met="5" type="-+">Ghebenedijt moet ghy in der eeuwigheyt <rhyme label="b" type="m">zijn</rhyme>,</l>
        <l id="s14:l3" met="6" type="+-">Die 'tlicht in duysternis laet schijnen <rhyme label="a" type="m" corresp="#s14:l1">neer</rhyme>,</l>
        <l id="s14:l4" met="4" type="+-">Die waren in doodes <rhyme label="b" type="m" corresp="#s14:l2">pijn</rhyme></l>
        <l id="s14:l5" met="3" type="-+">Gaeft ghy dit helder <rhyme label="b" type="m" corresp="#s14:l2">schijn</rhyme>,</l>
        <l id="s14:l6" met="3" type="-+">Looft Godt, o ziele <rhyme label="b" type="m" corresp="#s14:l2">mijn</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

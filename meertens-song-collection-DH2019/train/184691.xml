    <tags/>
    <melody>Bedroefde herder zie</melody>
  <author>Pieter Nootmans</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Wanneer mijn schaepjes <rhyme label="a" type="m">staen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Met swaren dorst <rhyme label="a" type="m" corresp="#s1:l1">belaen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Spreeck ick haer treurigh <rhyme label="a" type="m" corresp="#s1:l1">aen</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Met dese <rhyme label="b" type="f">reden</rhyme>:</l>
        <l id="s1:l5" met="3" type="-+">Ey parst uyt uwe <rhyme label="c" type="m">borst</rhyme></l>
        <l id="s1:l6" met="3" type="-+">U traentjes voor u <rhyme label="c" type="m" corresp="#s1:l5">dorst</rhyme>;</l>
        <l id="s1:l7" met="3" type="-+">Mits Titers hart <rhyme label="c" type="m" corresp="#s1:l5">bemorst</rhyme></l>
        <l id="s1:l8" met="2" type="-+">Is, laes! <rhyme label="b" type="f" corresp="#s1:l4">t'onvrede</rhyme>;</l>
        <l id="s1:l9" met="2" type="-+">Want waer ick <rhyme label="d" type="m">gae</rhyme></l>
        <l id="s1:l10" met="2" type="-+">In wey of <rhyme label="e" type="f">lommer</rhyme>,</l>
        <l id="s1:l11" met="2" type="+-">d'Echo bootst <rhyme label="d" type="m" corresp="#s1:l9">nae</rhyme></l>
        <l id="s1:l12" met="2" type="-+">Mijn zielens <rhyme label="e" type="f" corresp="#s1:l10">bekommer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">En als ick dan ter <rhyme label="a" type="m">sluyck</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Op eenen rouwen <rhyme label="a" type="m" corresp="#s2:l1">struyck</rhyme></l>
        <l id="s2:l3" met="3" type="-+">In't Veldt mijn oogen <rhyme label="a" type="m" corresp="#s2:l1">luyck</rhyme></l>
        <l id="s2:l4" met="2" type="-+">Of aen de <rhyme label="b" type="f">Beeckjes</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Komt my in mijnen <rhyme label="c" type="m">sin</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Flora schoon <rhyme label="c" type="m" corresp="#s2:l5">Harderin</rhyme></l>
        <l id="s2:l7" met="3" type="-+">U troetel-rijcke <rhyme label="c" type="m" corresp="#s2:l5">min</rhyme></l>
        <l id="s2:l8" met="2" type="-+">Vol lieve <rhyme label="b" type="f" corresp="#s2:l4">treeckjes</rhyme>,</l>
        <l id="s2:l9" met="2" type="-+">Geen vreugdt soo <rhyme label="d" type="m">groot</rhyme>,</l>
        <l id="s2:l10" met="2" type="-+">Gemengt met <rhyme label="e" type="f">lusten</rhyme>,</l>
        <l id="s2:l11" met="2" type="+-">Die ick <rhyme label="d" type="m" corresp="#s2:l9">genoot</rhyme></l>
        <l id="s2:l12" met="2" type="-+">Als ghy my maer <rhyme label="e" type="f" corresp="#s2:l10">kusten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Doch so mijn pijn <rhyme label="a" type="m">vergroot</rhyme></l>
        <l id="s3:l2" met="3" type="-+">En Titers hart <rhyme label="a" type="m" corresp="#s3:l1">af-stoot</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Sal noch de kille <rhyme label="a" type="m" corresp="#s3:l1">Doodt</rhyme></l>
        <l id="s3:l4" met="2" type="-+">U draet <rhyme label="b" type="f">af-knippen</rhyme>˙</l>
        <l id="s3:l5" met="3" type="-+">Iae yder spruytje <rhyme label="c" type="m">sal</rhyme></l>
        <l id="s3:l6" met="3" type="-+">U Harders <rhyme label="c" type="m" corresp="#s3:l5">ongeval</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">In't groen begraesde <rhyme label="c" type="m" corresp="#s3:l5">dal</rhyme>,</l>
        <l id="s3:l8" met="2" type="-+">Of aen de <rhyme label="b" type="f" corresp="#s3:l4">Klippen</rhyme>,</l>
        <l id="s3:l9" met="2" type="-+">Op dese <rhyme label="d" type="m">aerdt</rhyme></l>
        <l id="s3:l10" met="2" type="-+">Mijn doodt <rhyme label="e" type="f">beweenen</rhyme>,</l>
        <l id="s3:l11" met="2" type="+-">Om dat ghy <rhyme label="d" type="m" corresp="#s3:l9">waerdt</rhyme></l>
        <l id="s3:l12" met="2" type="-+">Laes! harder als <rhyme label="e" type="f" corresp="#s3:l10">steenen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">En dan met naer <rhyme label="a" type="m">gegrim</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">In 't Veldt, of op de <rhyme label="a" type="m" corresp="#s4:l1">Klim</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Sal mijn bestorven <rhyme label="a" type="m" corresp="#s4:l1">Schim</rhyme></l>
        <l id="s4:l4" met="2" type="-+">U Ziel <rhyme label="b" type="f">bespoocken</rhyme>˙</l>
        <l id="s4:l5" met="3" type="-+">Mijn toe-gesloten <rhyme label="c" type="m">mondt</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Sal tuygen uwen <rhyme label="c" type="m" corresp="#s4:l5">grondt</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Mijn oogen u <rhyme label="c" type="m" corresp="#s4:l5">verbondt</rhyme>,</l>
        <l id="s4:l8" met="2" type="-+">Met my <rhyme label="b" type="f" corresp="#s4:l4">gesproocken</rhyme>:</l>
        <l id="s4:l9" met="2" type="-+">'tGeen ghy ô <rhyme label="d" type="m">Vrou</rhyme></l>
        <l id="s4:l10" met="2" type="-+">Noch sult <rhyme label="e" type="f">bejamm'ren</rhyme></l>
        <l id="s4:l11" met="2" type="+-">Om dat mijn <rhyme label="d" type="m" corresp="#s4:l9">trou</rhyme></l>
        <l id="s4:l12" met="2" type="-+">Beweenen u <rhyme label="e" type="f" corresp="#s4:l10">Lamm'ren</rhyme>.</l>
      </lg>
    </lg>
  </text>

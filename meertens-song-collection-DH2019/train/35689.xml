  <author>Albertus Buitendyck</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">TOt Godes eer <rhyme label="a" type="f">verbreyden</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Laet ons d' oorspronck ende 't <rhyme label="a" type="f" corresp="#s1:l1">scheyden</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Van Apolonia Godes <rhyme label="b" type="m">Maeght</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">En haer liefde brandt <rhyme label="b" type="m" corresp="#s1:l3">onvertsaeght</rhyme>;</l>
        <l id="s1:l5" met="2" type="-+">Dit Godt <rhyme label="b" type="m" corresp="#s1:l3">behaeght</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Haer Vader in sijn <rhyme label="a" type="f">tye</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Was Keyzer t' <rhyme label="a" type="f" corresp="#s2:l1">Alexandrije</rhyme>.</l>
        <l id="s2:l3" met="4" type="-+">Haer Ouders waren verblint soo <rhyme label="b" type="m">seer</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Want voor d'Afgoden vielen sy <rhyme label="b" type="m" corresp="#s2:l3">ne'er</rhyme></l>
        <l id="s2:l5" met="2" type="-+">Met Godd'lijck <rhyme label="b" type="m" corresp="#s2:l3">eer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Begraven in de <rhyme label="a" type="f">aerde</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Dese Parel hoogh van <rhyme label="a" type="f" corresp="#s3:l1">waerde</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Door een Vrouw tot kennis Goods <rhyme label="b" type="m">geraeckt</rhyme>:</l>
        <l id="s3:l4" met="4" type="-+">d'Afgodt, met 's werelts pracht <rhyme label="b" type="m" corresp="#s3:l3">versaeckt</rhyme>;</l>
        <l id="s3:l5" met="2" type="-+">Godt haer soet <rhyme label="b" type="m" corresp="#s3:l3">smaeckt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Haer Ouders en haer <rhyme label="a" type="f">Vrinden</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Die willen haer soo <rhyme label="a" type="f" corresp="#s4:l1">verslinden</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Als 't Lam onnoosel van de Wolf <rhyme label="b" type="m">wreedt</rhyme>;</l>
        <l id="s4:l4" met="4" type="-+">Soo zy Goods eere niet <rhyme label="b" type="m" corresp="#s4:l3">vertreedt</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Haer kost'lijck <rhyme label="b" type="m" corresp="#s4:l3">kleedt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Verfoeyt 's werelts <rhyme label="a" type="f">presenten</rhyme>;</l>
        <l id="s5:l2" met="3" type="-+">Vreest lijde, doodt, noch <rhyme label="a" type="f" corresp="#s5:l1">tormenten</rhyme>;</l>
        <l id="s5:l3" met="4" type="-+">Een Engel schoon by haer is <rhyme label="b" type="m">geweest</rhyme>;</l>
        <l id="s5:l4" met="4" type="-+">Die versterckte soo hare <rhyme label="b" type="m" corresp="#s5:l3">geest</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">Dat zy niet <rhyme label="b" type="m" corresp="#s5:l3">vreest</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Een Toovenaer boos <rhyme label="a" type="f">rade</rhyme>;</l>
        <l id="s6:l2" met="3" type="-+">Wilt u Dochter tot stof <rhyme label="a" type="f" corresp="#s6:l1">brade</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Doet zy d'Afgodt offerhande <rhyme label="b" type="m">geen</rhyme>.</l>
        <l id="s6:l4" met="4" type="-+">Na dat zy Godt heeft <rhyme label="b" type="m" corresp="#s6:l3">aengebe'en</rhyme>,</l>
        <l id="s6:l5" met="2" type="-+">Wordt als een <rhyme label="b" type="m" corresp="#s6:l3">steen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Heeft op haer roode <rhyme label="a" type="f">wangen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Slagen by slagen <rhyme label="a" type="f" corresp="#s7:l1">ontfangen</rhyme>;</l>
        <l id="s7:l3" met="4" type="-+">Haer tanden en kiesen zijn <rhyme label="b" type="m">gescheurt</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Uyt hare mont; nochtans niet <rhyme label="b" type="m" corresp="#s7:l3">treurt</rhyme>,</l>
        <l id="s7:l5" met="2" type="-+">Als dit <rhyme label="b" type="m" corresp="#s7:l3">gebeurt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Schoevola wordt <rhyme label="a" type="f">geprese</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Die sijn vyandt heeft doen <rhyme label="a" type="f" corresp="#s8:l1">vresen</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Om dat hy verbrande sijnen <rhyme label="b" type="m">handt</rhyme>.</l>
        <l id="s8:l4" met="4" type="-+">App'lonia haer meer <rhyme label="b" type="m" corresp="#s8:l3">vermant</rhyme>,</l>
        <l id="s8:l5" met="2" type="-+">Haer heel <rhyme label="b" type="m" corresp="#s8:l3">verbrant</rhyme>.</l>
      </lg>
    </lg>
  </text>

  <author>M. van de Speybroek</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">NAer het <rhyme label="a" type="m">onwe'er</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Laet gy de Sonne <rhyme label="b" type="f">schijnen</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">O lieve <rhyme label="a" type="m" corresp="#s1:l1">Heer</rhyme>!</l>
        <l id="s1:l4" met="3" type="-+">Daer 't al door moet <rhyme label="b" type="f" corresp="#s1:l2">verdwijnen</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Soo sal hier <rhyme label="c" type="m">naer</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Oock alle <rhyme label="d" type="f">tribulacy</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Hoe groot en <rhyme label="c" type="m" corresp="#s1:l5">zwaer</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Verkeeren in korter <rhyme label="d" type="f" corresp="#s1:l6">spaey</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Ick houde <rhyme label="a" type="m">wis</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Dat het lijden in <rhyme label="b" type="f">desen</rhyme></l>
        <l id="s2:l3" met="2" type="-+">Niet te g'lijcken <rhyme label="a" type="m" corresp="#s2:l1">is</rhyme></l>
        <l id="s2:l4" met="3" type="-+">By dat Heerelijck <rhyme label="b" type="f" corresp="#s2:l2">wesen</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Doet hier na <rhyme label="c" type="m">al</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Gods Heyligen <rhyme label="d" type="f">ontmoeten</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">Waer door dan <rhyme label="c" type="m" corresp="#s2:l5">sal</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Den druck weder <rhyme label="d" type="f" corresp="#s2:l6">versoeten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Met water <rhyme label="a" type="m">hier</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Moet men sich somtijts <rhyme label="b" type="f">laven</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">In de <rhyme label="a" type="m" corresp="#s3:l1">Revier</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Daer wy moeten <rhyme label="b" type="f" corresp="#s3:l2">door-draven</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Soo lang' wy <rhyme label="c" type="m">zijn</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Uyt-landers hier <rhyme label="d" type="f">bevonden</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">In de <rhyme label="c" type="m" corresp="#s3:l5">Woestijn</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Vol gebreken en <rhyme label="d" type="f" corresp="#s3:l6">sonden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Die hier nu <rhyme label="a" type="m">gaen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Door 't jammer-dal met <rhyme label="b" type="f">eenen</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">In druck <rhyme label="a" type="m" corresp="#s4:l1">belaen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Dickwils suchten en <rhyme label="b" type="f" corresp="#s4:l2">weenen</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Al haer <rhyme label="c" type="m">droefheyt</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Sal in blijdtschap <rhyme label="d" type="f">verkeeren</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">Die hier nu <rhyme label="c" type="m" corresp="#s4:l5">schreyt</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Sullen lacchen met <rhyme label="d" type="f" corresp="#s4:l6">eeren</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Dit <rhyme label="a" type="m">Jammer-dal</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Dat men hier siet <rhyme label="b" type="f">betreden</rhyme>,</l>
        <l id="s5:l3" met="2" type="-+">Ten laetsten <rhyme label="a" type="m" corresp="#s5:l1">sal</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Wel zijn een <rhyme label="b" type="f" corresp="#s5:l2">jammer-stede</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">Voor die nu <rhyme label="c" type="m">schier</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Haren Hemel daer <rhyme label="d" type="f">houwen</rhyme>,</l>
        <l id="s5:l7" met="2" type="-+">Sullen in 't <rhyme label="c" type="m" corresp="#s5:l5">vyer</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Met haer oogen <rhyme label="d" type="f" corresp="#s5:l6">aenschouwen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Kort <rhyme label="a" type="m">Hemelrijck</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">En lang-duerige <rhyme label="b" type="f">Helle</rhyme>,</l>
        <l id="s6:l3" met="2" type="-+">Daer sy <rhyme label="a" type="m" corresp="#s6:l1">gelijck</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Sullen moeten <rhyme label="b" type="f" corresp="#s6:l2">verselle</rhyme>,</l>
        <l id="s6:l5" met="2" type="-+">Die haren <rhyme label="c" type="m">tijt</rhyme></l>
        <l id="s6:l6" met="3" type="-+">In 's wereldts <rhyme label="d" type="f">dominacy</rhyme></l>
        <l id="s6:l7" met="2" type="-+">Zijn worden <rhyme label="c" type="m" corresp="#s6:l5">quijt</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Verkrijgen dan geen <rhyme label="d" type="f" corresp="#s6:l6">gracy</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="2" type="-+">Den druck, hoe <rhyme label="a" type="m">zwaer</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Hier tijdelijck en <rhyme label="b" type="f">lichte</rhyme>,</l>
        <l id="s7:l3" met="2" type="-+">Verwint daer <rhyme label="a" type="m" corresp="#s7:l1">naer</rhyme></l>
        <l id="s7:l4" met="3" type="-+">(Gansch boven de <rhyme label="b" type="f" corresp="#s7:l2">gewichte</rhyme>)</l>
        <l id="s7:l5" met="2" type="-+">Een vreughde <rhyme label="c" type="m">groot</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Die niet is om <rhyme label="d" type="f">sommeeren</rhyme>,</l>
        <l id="s7:l7" met="2" type="-+">Die totter <rhyme label="c" type="m" corresp="#s7:l5">doodt</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Door 't jammer-dal <rhyme label="d" type="f" corresp="#s7:l6">passeeren</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="2" type="-+">Troost u met <rhyme label="a" type="m">dit</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">In des drucks <rhyme label="b" type="f">pelgrimagie</rhyme>;</l>
        <l id="s8:l3" met="2" type="-+">Siet op 't <rhyme label="a" type="m" corresp="#s8:l1">besit</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Soo sult gy met <rhyme label="b" type="f" corresp="#s8:l2">couragie</rhyme></l>
        <l id="s8:l5" met="2" type="-+">Den aerdschen <rhyme label="c" type="m">druck</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Met 't Hemels <rhyme label="d" type="f">overwinnen</rhyme>:</l>
        <l id="s8:l7" met="2" type="-+">Want u <rhyme label="c" type="m" corresp="#s8:l5">geluck</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Leyt daer ter plaetse <rhyme label="d" type="f" corresp="#s8:l6">binnen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

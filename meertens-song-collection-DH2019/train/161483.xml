  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ICk roep tot u O Schepper <rhyme label="a" type="m">mijn</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Wilt my doch nu <rhyme label="b" type="f">verhooren</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Wilt mijnder doch ghenadich <rhyme label="a" type="m" corresp="#s1:l1">zijn</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Laet my niet zijn <rhyme label="b" type="f" corresp="#s1:l2">verlooren</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">O Heer u gratie <rhyme label="c" type="m">menichfout</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Laet my ontfaen want my <rhyme label="c" type="m" corresp="#s1:l5">berout</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Mijn sonden en mijn <rhyme label="d" type="m">misdaedt</rhyme>,</l>
        <l id="s1:l8" met="5" type="-+">Nacht ende dach roep ick tot u om <rhyme label="d" type="m" corresp="#s1:l7">baet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ick heb berou o Heere <rhyme label="a" type="m">Ient</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Van alle mijn sonde <rhyme label="b" type="f">quade</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Mijn brosheyt is u wel <rhyme label="a" type="m" corresp="#s2:l1">bekent</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Gheeft my o Heer <rhyme label="b" type="f" corresp="#s2:l2">ghenade</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Vwen gheest van boven in my <rhyme label="c" type="m">sendt</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Die my van alle quaet af <rhyme label="c" type="m" corresp="#s2:l5">wendt</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">En leert my doch het <rhyme label="d" type="m">goet</rhyme>,</l>
        <l id="s2:l8" met="5" type="-+">INacht ende dach daer toe helpt my met <rhyme label="d" type="m" corresp="#s2:l7">spoet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Een lidt te zijn aen u <rhyme label="a" type="m">lichaem</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Maeckt my daer toe <rhyme label="b" type="f">ydoone</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Daer ghy het hooft af zijt <rhyme label="a" type="m" corresp="#s3:l1">eersaem</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Een ranck uws wijnstocx <rhyme label="b" type="f" corresp="#s3:l2">schoone</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Begheer ick oock te zijn <rhyme label="c" type="m">vruchtbaer</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Dat bid ick u voor end <rhyme label="c" type="m" corresp="#s3:l5">naer</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Daer ghy die stamme af <rhyme label="d" type="m">zijt</rhyme>,</l>
        <l id="s3:l8" met="5" type="-+">Nacht ende dach my met uwen gheest <rhyme label="d" type="m" corresp="#s3:l7">verblijt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Maeckt my doch weerdich en <rhyme label="a" type="m">bequaem</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Een steen aen uwen <rhyme label="b" type="f">Tempel</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Ghy den hoecksteen so ick <rhyme label="a" type="m" corresp="#s4:l1">raem</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Sonder eenighe vleck oft <rhyme label="b" type="f" corresp="#s4:l2">rempel</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Wilt mijn gheloof vermeeren o <rhyme label="c" type="m">Heer</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Te wandelen uwen wegh oock <rhyme label="c" type="m" corresp="#s4:l5">leer</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Al na die rechte <rhyme label="d" type="m">stadt</rhyme>,</l>
        <l id="s4:l8" met="5" type="-+">Nacht ende dach soeck ick na desen <rhyme label="d" type="m" corresp="#s4:l7">padt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">In sonden ben ick ontfanghen <rhyme label="a" type="m">hoort</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Wat sal ick doch <rhyme label="b" type="f">beginnen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">En oock daer in gheboren <rhyme label="a" type="m" corresp="#s5:l1">voort</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">T'vleysch gaetet quaet <rhyme label="b" type="f" corresp="#s5:l2">beminnen</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Mijn gheest o Heer dat <rhyme label="c" type="m">wederstaet</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Ick roep tot u comt my te <rhyme label="c" type="m" corresp="#s5:l5">baet</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Helpt my mijn vleys <rhyme label="d" type="m">vertreen</rhyme>,</l>
        <l id="s5:l8" met="5" type="-+">Nacht ende dach begheer ick dat <rhyme label="d" type="m" corresp="#s5:l7">alleen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Weest niet verslaghen leden <rhyme label="a" type="m">teer</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Ick sal u geven <rhyme label="b" type="f">rade</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Stelt u teghen het vleys te <rhyme label="a" type="m" corresp="#s6:l1">weer</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">So staet ghy in <rhyme label="b" type="f" corresp="#s6:l2">ghenade</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">En soeckt na t'cleyne ghetal met <rhyme label="c" type="m">vlijt</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">T'welck wort van alle man <rhyme label="c" type="m" corresp="#s6:l5">benijdt</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Met dien maeckt u <rhyme label="d" type="m">ghemeen</rhyme>,</l>
        <l id="s6:l8" met="5" type="-+">Nacht ende dach so blijft by haer <rhyme label="d" type="m" corresp="#s6:l7">alleen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">want sy is reyn, Gods bruyt <rhyme label="a" type="m">certeyn</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">En oock sijn <rhyme label="b" type="f">uytvercoren</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Het zijn Gods kinders en anders <rhyme label="a" type="m" corresp="#s7:l1">geyn</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Sy zijn van hem <rhyme label="b" type="f" corresp="#s7:l2">gheboren</rhyme></l>
        <l id="s7:l5" met="4" type="-+">Wt water en oock gheest en <rhyme label="c" type="m">vyer</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Recht na Christus aert en <rhyme label="c" type="m" corresp="#s7:l5">manier</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Sy zijn hem <rhyme label="d" type="m">onderdaen</rhyme></l>
        <l id="s7:l8" met="5" type="-+">Nacht ende dach doen sy na sijn <rhyme label="d" type="m" corresp="#s7:l7">vermaen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Dit is die heylighe stadt hoort <rhyme label="a" type="m">mijn</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Dat nieuwe Ierusalem <rhyme label="b" type="f">schoone</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Daer gheen onreynicheydt moet <rhyme label="a" type="m" corresp="#s8:l1">in</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Daerom moet ghy stryden <rhyme label="b" type="f" corresp="#s8:l2">koone</rhyme></l>
        <l id="s8:l5" met="4" type="-+">Daer buyten zijn honden en <rhyme label="c" type="m">toovenaers</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Hoereerders, dronckaerts en <rhyme label="c" type="m" corresp="#s8:l5">leughenaers</rhyme></l>
        <l id="s8:l7" met="3" type="-+">Die altijdt bytende <rhyme label="d" type="m">zijn</rhyme></l>
        <l id="s8:l8" met="5" type="-+">Nacht ende dach teghen dese burghers <rhyme label="d" type="m" corresp="#s8:l7">fijn</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Die dit liet eerst heeft <rhyme label="a" type="m">ghedicht</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Hy is alsoo <rhyme label="b" type="f">beraden</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Te wandelen al in het <rhyme label="a" type="m" corresp="#s9:l1">licht</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Hy bidt Godt om <rhyme label="b" type="f" corresp="#s9:l2">ghenaden</rhyme>:</l>
        <l id="s9:l5" met="4" type="-+">Och vrinden hoort wel dit <rhyme label="c" type="m">bediet</rhyme></l>
        <l id="s9:l6" met="4" type="-+">En wilt hem doch verstooten <rhyme label="c" type="m" corresp="#s9:l5">niet</rhyme></l>
        <l id="s9:l7" met="3" type="-+">Want hy begheert <rhyme label="d" type="m">devijn</rhyme></l>
        <l id="s9:l8" met="5" type="-+">Nacht ende dach in Gods Gemeente te <rhyme label="d" type="m" corresp="#s9:l7">zijn</rhyme></l>
      </lg>
    </lg>
  </text>
</song>

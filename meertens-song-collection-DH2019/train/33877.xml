  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">Jesus en <rhyme label="a" type="f">konde</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Niet schuylen als hy <rhyme label="b" type="m">wouw</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">Daet'lijk hem <rhyme label="a" type="f" corresp="#s1:l1">vonde</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Een Cananeesche <rhyme label="b" type="m" corresp="#s1:l2">Vrouw</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Sy volghd' hem <rhyme label="c" type="m">ras</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Doe s' van hem heeft <rhyme label="d" type="f">geweeten</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Haer Doghter <rhyme label="c" type="m" corresp="#s1:l5">was</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Van een Duyvel <rhyme label="d" type="f" corresp="#s1:l6">beseeten</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Sy quam aen <rhyme label="a" type="f">kermen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">O Jesu, Davids <rhyme label="b" type="m">Soon</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Wilt mijns <rhyme label="a" type="f" corresp="#s2:l1">ontfermen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Riep sy met droeven <rhyme label="b" type="m" corresp="#s2:l2">toon</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Van Satan <rhyme label="c" type="m">wert</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Mijn Doghter <rhyme label="d" type="f">jammerlijken</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">Met groote <rhyme label="c" type="m" corresp="#s2:l5">smert</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Gequelt, och! doet hem <rhyme label="d" type="f" corresp="#s2:l6">wijken</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Jesus sweegh <rhyme label="a" type="f">stille</rhyme>;</l>
        <l id="s3:l2" met="3" type="-+">Sijn Jongers seyden, <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Doet haren <rhyme label="a" type="f" corresp="#s3:l1">wille</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Sy roept ons na soo <rhyme label="b" type="m" corresp="#s3:l2">seer</rhyme>.</l>
        <l id="s3:l5" met="2" type="-+">Ik kom <rhyme label="c" type="m">alleen</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Om de verloore <rhyme label="d" type="f">Schapen</rhyme></l>
        <l id="s3:l7" met="2" type="-+">Weerom by <rhyme label="c" type="m" corresp="#s3:l5">een</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Van Israël, te <rhyme label="d" type="f" corresp="#s3:l6">rapen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Sy viel ter <rhyme label="a" type="f">neere</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En badt hem <rhyme label="b" type="m">overluyt</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">En seyd', o <rhyme label="a" type="f" corresp="#s4:l1">Heere</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Wilt Satan jagen <rhyme label="b" type="m" corresp="#s4:l2">uyt</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">O Heer, helpt <rhyme label="c" type="m">mijn</rhyme>.</l>
        <l id="s4:l6" met="3" type="-+">Maer Jesus geeft <rhyme label="d" type="f">antwoorde</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">Versadight <rhyme label="c" type="m" corresp="#s4:l5">sijn</rhyme></l>
        <l id="s4:l8" met="3" type="-+">De Kinders eerst <rhyme label="d" type="f" corresp="#s4:l6">behoorde</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">'t Is niet <rhyme label="a" type="f">bequamlijk</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Te neemen 't Kinders <rhyme label="b" type="m">broodt</rhyme>,</l>
        <l id="s5:l3" met="2" type="-+">Dat <rhyme label="a" type="f" corresp="#s5:l1">onbetaemlijk</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Te geven d'honden <rhyme label="b" type="m" corresp="#s5:l2">snoodt</rhyme>.</l>
        <l id="s5:l5" met="2" type="-+">Ja togh, o <rhyme label="c" type="m">Heer</rhyme>!</l>
        <l id="s5:l6" met="3" type="-+">Maer d'honden van de <rhyme label="d" type="f">kruymen</rhyme></l>
        <l id="s5:l7" met="2" type="-+">Eeten wel <rhyme label="c" type="m" corresp="#s5:l5">meer</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Welk Kinderen <rhyme label="d" type="f" corresp="#s5:l6">versuymen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Hy seydt, o <rhyme label="a" type="f">Vrouwe</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Uw groot geloof men <rhyme label="b" type="m">sien</rhyme>;</l>
        <l id="s6:l3" met="2" type="-+">Na uw' <rhyme label="a" type="f" corresp="#s6:l1">betrouwe</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Soo laet dan u <rhyme label="b" type="m" corresp="#s6:l2">geschien</rhyme>:</l>
        <l id="s6:l5" met="2" type="-+">Gaet, want uw <rhyme label="c" type="m">Kindt</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Van Satan vry sal <rhyme label="d" type="f">weesen</rhyme>.</l>
        <l id="s6:l7" met="2" type="-+">Sy gaet, en <rhyme label="c" type="m" corresp="#s6:l5">vindt</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Haer Doghter heel <rhyme label="d" type="f" corresp="#s6:l6">geneesen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="2" type="-+">Die selve <rhyme label="a" type="f">stonde</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Dat Jesus tot haer <rhyme label="b" type="m">sprak</rhyme>,</l>
        <l id="s7:l3" met="2" type="-+">Wierdt 't Kindt <rhyme label="a" type="f" corresp="#s7:l1">gesonde</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Den Duyvel vluchte <rhyme label="b" type="m" corresp="#s7:l2">strak</rhyme>.</l>
        <l id="s7:l5" met="2" type="-+">Op 't bedt sy <rhyme label="c" type="m">lagh</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Als d'Moêr in Huys quam <rhyme label="d" type="f">treeden</rhyme>,</l>
        <l id="s7:l7" met="2" type="-+">Ende haer <rhyme label="c" type="m" corresp="#s7:l5">sagh</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Gesondt, met rust en <rhyme label="d" type="f" corresp="#s7:l6">vreeden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="2" type="-+">Wilt niet <rhyme label="a" type="f">verlaten</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Uw' Kinders, Jesu <rhyme label="b" type="m">goet</rhyme>,</l>
        <l id="s8:l3" met="2" type="-+">Komt ons te <rhyme label="a" type="f" corresp="#s8:l1">baten</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Met d'aldergrootste <rhyme label="b" type="m" corresp="#s8:l2">spoet</rhyme>,</l>
        <l id="s8:l5" met="2" type="-+">Ende <rhyme label="c" type="m">verdrijf</rhyme></l>
        <l id="s8:l6" met="3" type="-+">De Duyvels na der <rhyme label="d" type="f">Hellen</rhyme>,</l>
        <l id="s8:l7" met="2" type="-+">Die siel en <rhyme label="c" type="m" corresp="#s8:l5">lijf</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Altijdt soeken te <rhyme label="d" type="f" corresp="#s8:l6">quellen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <author>Cornelis de Leeuw</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">BY een recht ned'righ <rhyme label="a" type="m">hert</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Gheen hoogheyt wert <rhyme label="b" type="f">ghevonden</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Van hem gevloden <rhyme label="a" type="m" corresp="#s1:l1">wert</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Die schadelijcke <rhyme label="b" type="f" corresp="#s1:l2">sonden</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Hy buygt sig onder <rhyme label="c" type="m">God</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Sijn opperhooffdig <rhyme label="d" type="f">Heere</rhyme></l>
        <l id="s1:l7" met="3" type="-+">En volghens sijn <rhyme label="c" type="m" corresp="#s1:l5">ghebod</rhyme></l>
        <l id="s1:l8" met="6" type="+-">Gheeft hy sijn naesten eere, sijn eere sijn eere, sijn ee- <rhyme label="d" type="f" corresp="#s1:l6">re</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Schoon hy in hooghen <rhyme label="a" type="m">staet</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Is boven veel <rhyme label="b" type="f">verheven</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Daerom hy niet en <rhyme label="a" type="m" corresp="#s2:l1">laet</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Ootmoedighlijck te <rhyme label="b" type="f" corresp="#s2:l2">leven</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Sijn groote <rhyme label="c" type="m">heerschappy</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Hem selven niet doet <rhyme label="d" type="f">achten</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Meer dan hy waerdigh <rhyme label="c" type="m" corresp="#s2:l5">zy</rhyme>.</l>
        <l id="s2:l8" met="6" type="+-">Sijn ampt sal hy betrachten, Betrachten, betrachten, <rhyme label="d" type="f" corresp="#s2:l6">betrachten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">En of hy gaven <rhyme label="a" type="m">heeft</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Die waerdigh sijn om <rhyme label="b" type="f">prijsen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Dat hem gheen steunsel <rhyme label="a" type="m" corresp="#s3:l1">gheeft</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Om selfs die aen te <rhyme label="b" type="f" corresp="#s3:l2">wijsen</rhyme>;</l>
        <l id="s3:l5" met="3" type="-+">Hy swijght, op dat hy <rhyme label="c" type="m">niet</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Door eyghen loff te <rhyme label="d" type="f">smaden</rhyme></l>
        <l id="s3:l7" met="3" type="-+">En schijne, die <rhyme label="c" type="m" corresp="#s3:l5">gheniet</rhyme></l>
        <l id="s3:l8" met="6" type="+-">Van Gode min ghenaden, ghenaden ghenaden, <rhyme label="d" type="f" corresp="#s3:l6">ghenaden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Hy doet sijn wercken <rhyme label="a" type="m">niet</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Om menschelijcke <rhyme label="b" type="f">eere</rhyme>;</l>
        <l id="s4:l3" met="3" type="-+">Maer om dat sulcx <rhyme label="a" type="m" corresp="#s4:l1">ghebiet</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Sijn eenigh Godt en <rhyme label="b" type="f" corresp="#s4:l2">Heere</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Al wert hy niet <rhyme label="c" type="m">ghegroet</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Mijn Heer, in Huys en <rhyme label="d" type="f">weghen</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Hem dat gheen hertseer <rhyme label="c" type="m" corresp="#s4:l5">doet</rhyme></l>
        <l id="s4:l8" met="6" type="+-">Als weynigh aen gheleghen, gheleghen, ghelegen, <rhyme label="d" type="f" corresp="#s4:l6">gheleghen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Hy door <rhyme label="a" type="m">ootmoedigheyt</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Sich minder acht dan <rhyme label="b" type="f">and'ren</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Schoon sy in <rhyme label="a" type="m" corresp="#s5:l1">slechtigheyt</rhyme></l>
        <l id="s5:l4" met="3" type="-+">En armelijck hier <rhyme label="b" type="f" corresp="#s5:l2">wand'ren</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Hy eert niet die <rhyme label="c" type="m">alleen</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Die boven hem uyt <rhyme label="d" type="f">muyten</rhyme></l>
        <l id="s5:l7" met="3" type="-+">In staet; maer oock die <rhyme label="c" type="m" corresp="#s5:l5">gheen</rhyme></l>
        <l id="s5:l8" met="6" type="+-">Die wy van eer, uytsluyten, uytsluyten, uytsluyten, <rhyme label="d" type="f" corresp="#s5:l6">uytsluyten</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Hy yder mensch <rhyme label="a" type="m">bemint</rhyme></l>
        <l id="s6:l2" met="3" type="-+">En lieft, hoe wel <rhyme label="b" type="f">verschooven</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Hy heeftse wel <rhyme label="a" type="m" corresp="#s6:l1">ghesint</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">En meer, soo sy Godt <rhyme label="b" type="f" corresp="#s6:l2">loven</rhyme>:</l>
        <l id="s6:l5" met="3" type="-+">Dewijl hy weet, dat <rhyme label="c" type="m">sy</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Gods schepsels en sijn <rhyme label="d" type="f">kind'ren</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Sijn, alsoo wel als <rhyme label="c" type="m" corresp="#s6:l5">hy</rhyme>.</l>
        <l id="s6:l8" met="6" type="+-">Gheen armoe kan dat hind'ren, dat hind'ren, dat hind'ren, dat <rhyme label="d" type="f" corresp="#s6:l6">hind'ren</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Met lijdtsaemheyt hy <rhyme label="a" type="m">draecht</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Dat menschen hem <rhyme label="b" type="f">versmaden</rhyme>;</l>
        <l id="s7:l3" met="3" type="-+">Als hy sijn Godt <rhyme label="a" type="m" corresp="#s7:l1">behaeght</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">'t Kan hem aent 't heyl niet <rhyme label="b" type="f" corresp="#s7:l2">schaden</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">Voor 's Heeren oogh hy <rhyme label="c" type="m">leeft</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Die alle, die hem <rhyme label="d" type="f">vreesen</rhyme></l>
        <l id="s7:l7" met="3" type="-+">De kroon des levens <rhyme label="c" type="m" corresp="#s7:l5">gheeft</rhyme>,</l>
        <l id="s7:l8" met="6" type="+-">En haer in vreucht laet wesen, laet wesen, laet wesen, laet <rhyme label="d" type="f" corresp="#s7:l6">wesen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Nae hoogheydt hy niet <rhyme label="a" type="m">tracht</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Hoe seer ghesocht op <rhyme label="b" type="f">Aerden</rhyme>.</l>
        <l id="s8:l3" met="3" type="-+">Wert hem die t'huys <rhyme label="a" type="m" corresp="#s8:l1">ghebracht</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Hy macht en sal 't <rhyme label="b" type="f" corresp="#s8:l2">aenvaerden</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Als van Godt <rhyme label="c" type="m">inghestelt</rhyme></l>
        <l id="s8:l6" met="3" type="-+">En Christi Wet niet <rhyme label="d" type="f">teghen</rhyme>;</l>
        <l id="s8:l7" met="3" type="-+">Doch om sijn Aertsch <rhyme label="c" type="m" corresp="#s8:l5">ghewelt</rhyme></l>
        <l id="s8:l8" met="6" type="+-">Sal hy gheen hooghmoet pleghen, moet pleghen, moet pleghen, moet <rhyme label="d" type="f" corresp="#s8:l6">pleghen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Nochtans hy niet <rhyme label="a" type="m">versmaet</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Den Gheest van Godt <rhyme label="b" type="f">verkreghen</rhyme>;</l>
        <l id="s9:l3" met="3" type="-+">Die waerdigh by hem <rhyme label="a" type="m" corresp="#s9:l1">staet</rhyme>:</l>
        <l id="s9:l4" met="3" type="-+">Hy spreeckte nimmer <rhyme label="b" type="f" corresp="#s9:l2">teghen</rhyme>.</l>
        <l id="s9:l5" met="3" type="-+">Hy salse wenden <rhyme label="c" type="m">aen</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Tot meerderingh van <rhyme label="d" type="f">deughden</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Op dat hy naemaels <rhyme label="c" type="m" corresp="#s9:l5">gaen</rhyme></l>
        <l id="s9:l8" met="6" type="+-">Mach seecker in Gods vreuchden, Gods vreuchden, Gods vreuchden, Gods <rhyme label="d" type="f" corresp="#s9:l6">vreuchden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

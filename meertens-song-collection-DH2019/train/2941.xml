    <melody>A lieta vita</melody>
  <author>Dirk Rafaelsz. Camphuysen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">TOt vrolijck <rhyme label="a" type="f">leven</rhyme></l>
        <l id="s1:l2" met="2" type="-+">Wordt hy <rhyme label="a" type="f" corresp="#s1:l1">gedreven</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Die op Godt door Christum <rhyme label="b" type="m">bout</rhyme>.</l>
        <l id="s1:l4" met="2" type="-+">All' Aerdtsche <rhyme label="c" type="f">dingen</rhyme></l>
        <l id="s1:l5" met="2" type="-+">Zijn te <rhyme label="c" type="f" corresp="#s1:l4">geringe</rhyme></l>
        <l id="s1:l6" met="2" type="-+">Tot zijn <rhyme label="d" type="f">vermaken</rhyme>:</l>
        <l id="s1:l7" met="2" type="-+">'t Zijn and're <rhyme label="d" type="f" corresp="#s1:l6">zaken</rhyme></l>
        <l id="s1:l8" met="4" type="+-">Daer zijn geest hier feest me'e <rhyme label="b" type="m" corresp="#s1:l3">houdt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Tot allen <rhyme label="a" type="f">tijde</rhyme></l>
        <l id="s2:l2" met="2" type="-+">Te wezen <rhyme label="a" type="f" corresp="#s2:l1">blijde</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Is hem uyt Godts mondt <rhyme label="b" type="m">geboo'n</rhyme>.</l>
        <l id="s2:l4" met="2" type="-+">Lijckt hy <rhyme label="c" type="f">uytwendigh</rhyme></l>
        <l id="s2:l5" met="2" type="-+">Voor 't oogh <rhyme label="c" type="f" corresp="#s2:l4">ellendigh</rhyme>:</l>
        <l id="s2:l6" met="2" type="-+">'t Onduerzaem <rhyme label="d" type="f">strijden</rhyme></l>
        <l id="s2:l7" met="2" type="-+">Is 't hert geen <rhyme label="d" type="f" corresp="#s2:l6">lijden</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Door de hoop' van 'theerlijck <rhyme label="b" type="m" corresp="#s2:l3">loon</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Zijns herten <rhyme label="a" type="f">oogen</rhyme>,</l>
        <l id="s3:l2" met="2" type="-+">Van d'Aerdt <rhyme label="a" type="f" corresp="#s3:l1">getogen</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">En ten Hemel <rhyme label="b" type="m">op-gevoert</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">Zien en <rhyme label="c" type="f">bevatten</rhyme></l>
        <l id="s3:l5" met="2" type="-+">Aldaer de <rhyme label="c" type="f" corresp="#s3:l4">schatten</rhyme></l>
        <l id="s3:l6" met="2" type="-+">Van roest en <rhyme label="d" type="f">motten</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">Verderff en <rhyme label="d" type="f" corresp="#s3:l6">rotten</rhyme></l>
        <l id="s3:l8" met="4" type="+-">Eeuwelijck <rhyme label="b" type="m" corresp="#s3:l3">on-aen-geroert</rhyme>:</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Waer op en <rhyme label="a" type="f">over</rhyme></l>
        <l id="s4:l2" met="2" type="-+">Geen dieff, geen <rhyme label="a" type="f" corresp="#s4:l1">roover</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Lange tijdt noch spijt noch <rhyme label="b" type="m">nijdt</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">Gezach off kracht <rhyme label="c" type="f">heeft</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Geweldt off macht <rhyme label="c" type="f" corresp="#s4:l4">heeft</rhyme>;</l>
        <l id="s4:l6" met="2" type="-+">Nooyt kan <rhyme label="d" type="f">ontwenden</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">Nooyt kan doen <rhyme label="d" type="f" corresp="#s4:l6">enden</rhyme>:</l>
        <l id="s4:l8" met="4" type="+-">Zaligh die alzoo <rhyme label="b" type="m" corresp="#s4:l3">verblijdt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Dat's vreuchdt die grondt <rhyme label="a" type="f">heeft</rhyme>,</l>
        <l id="s5:l2" met="2" type="-+">Die hert en mondt <rhyme label="a" type="f" corresp="#s5:l1">geeft</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Vrolijck denck- en <rhyme label="b" type="m">sprake-stoff</rhyme>:</l>
        <l id="s5:l4" met="2" type="-+">Mids in de <rhyme label="c" type="f">wolven</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">Vervolgings <rhyme label="c" type="f" corresp="#s5:l4">golven</rhyme>,</l>
        <l id="s5:l6" met="2" type="-+">Benautheydts <rhyme label="d" type="f">klippen</rhyme>,</l>
        <l id="s5:l7" met="2" type="-+">Houdt zy de <rhyme label="d" type="f" corresp="#s5:l6">lippen</rhyme></l>
        <l id="s5:l8" met="4" type="+-">Stadigh vol van Godes <rhyme label="b" type="m" corresp="#s5:l3">loff</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Waer Schat, waer Hert <rhyme label="a" type="f">is</rhyme>:</l>
        <l id="s6:l2" met="2" type="-+">Waer Godt, geen smert <rhyme label="a" type="f" corresp="#s6:l1">is</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Maer de Vol^t van alle <rhyme label="b" type="m">vreuchdt</rhyme>:</l>
        <l id="s6:l4" met="2" type="-+">Waer Deuchdt, waer Godt <rhyme label="c" type="f">is</rhyme>:</l>
        <l id="s6:l5" met="2" type="-+">Waer Godts gebodt <rhyme label="c" type="f" corresp="#s6:l4">is</rhyme>,</l>
        <l id="s6:l6" met="2" type="-+">En hert en oor <rhyme label="d" type="f">leydt</rhyme></l>
        <l id="s6:l7" met="2" type="-+">Zoo 't Christus <rhyme label="d" type="f" corresp="#s6:l6">voor-leyt</rhyme>,</l>
        <l id="s6:l8" met="4" type="+-">Daer 's de Godt-vereyschte <rhyme label="b" type="m" corresp="#s6:l3">Deuchdt</rhyme>.</l>
      </lg>
    </lg>
  </text>

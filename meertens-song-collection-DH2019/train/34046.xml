  <author>Jacob Rosant</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">WAnneer Phocas <rhyme label="a" type="f">regeerde</rhyme></l>
        <l id="s1:l2" met="3" type="-+">In 't Roomsche <rhyme label="b" type="m">Keyser-rijk</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">En hy niet en <rhyme label="a" type="f" corresp="#s1:l1">begeerde</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Te leeven <rhyme label="b" type="m" corresp="#s1:l2">deughdelijk</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Is Cosroas <rhyme label="a" type="f">gekoomen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Den wreeden <rhyme label="b" type="m">Persiaen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">En heeft met hem <rhyme label="a" type="f" corresp="#s2:l1">genoomen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Het Heyligh Kruys van <rhyme label="b" type="m" corresp="#s2:l2">daen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">'t Was droefheyt sonder <rhyme label="a" type="f">maten</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">In 't heele Christen <rhyme label="b" type="m">Lant</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Dat sy soo mosten <rhyme label="a" type="f" corresp="#s3:l1">laten</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Dien kostelijken <rhyme label="b" type="m" corresp="#s3:l2">pant</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">En Cosroas was <rhyme label="a" type="f">maghtigh</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Hy wonn' schier 't heele <rhyme label="b" type="m">Lant</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Door veel victori <rhyme label="a" type="f" corresp="#s4:l1">praghtigh</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Hadt hy de <rhyme label="b" type="m" corresp="#s4:l2">overhant</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Den Oorlogh was seer <rhyme label="a" type="f">bloedigh</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Waer door de <rhyme label="b" type="m">Christenen</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Toen wierden seer <rhyme label="a" type="f" corresp="#s5:l1">ootmoedigh</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">En quamen tot <rhyme label="b" type="m" corresp="#s5:l2">beken</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Dus wil haer Godt <rhyme label="a" type="f">ontfermen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Terwijl s' hem roepen <rhyme label="b" type="m">aen</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">En hy wil haer <rhyme label="a" type="f" corresp="#s6:l1">beschermen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Tegens den <rhyme label="b" type="m" corresp="#s6:l2">Persiaen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Tot Keyser is <rhyme label="a" type="f">genoomen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Heraclius dien <rhyme label="b" type="m">Heldt</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Die 't Keyser-rijk van <rhyme label="a" type="f" corresp="#s7:l1">Roomen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Souw vryden van 't <rhyme label="b" type="m" corresp="#s7:l2">geweldt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Hy was seer kleyn van <rhyme label="a" type="f">maghte</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">'t Roomsch Rijk was seer <rhyme label="b" type="m">gekrenkt</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Dus hy in sijn <rhyme label="a" type="f" corresp="#s8:l1">gedaghte</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Godtvrughtelijk <rhyme label="b" type="m" corresp="#s8:l2">bedenkt</rhyme>,</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">9.Op Godt den Heer <rhyme label="a" type="f">alleene</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Te steunen, dagh en <rhyme label="b" type="m">naght</rhyme>;</l>
        <l id="s9:l3" met="3" type="-+">Die hem wel kon <rhyme label="a" type="f" corresp="#s9:l1">verleene</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Victori <rhyme label="b" type="m" corresp="#s9:l2">onverwaght</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Dus hy met kloeken <rhyme label="a" type="f">moede</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Sijn vyanden <rhyme label="b" type="m">besoght</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Die hy ook met <rhyme label="a" type="f" corresp="#s10:l1">voorspoede</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Seer ras te onder <rhyme label="b" type="m" corresp="#s10:l2">broght</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Met weynige <rhyme label="a" type="f">Soldaten</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Hy mennighte <rhyme label="b" type="m">versloegh</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Want Godt quam hem te <rhyme label="a" type="f" corresp="#s11:l1">baten</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Die haer de anghst <rhyme label="b" type="m" corresp="#s11:l2">aenjoegh</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Dus Cosroas vol <rhyme label="a" type="f">vreese</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Seer schandelijken <rhyme label="b" type="m">vloodt</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">En is nogh booven <rhyme label="a" type="f" corresp="#s12:l1">deesen</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Van sijnen Soon <rhyme label="b" type="m" corresp="#s12:l2">gedoodt</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Dees maekt een goede <rhyme label="a" type="f">vreede</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Met die van 't <rhyme label="b" type="m">Christen-Rijk</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Geeft over meenigh <rhyme label="a" type="f" corresp="#s13:l1">steede</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Gevangens <rhyme label="b" type="m" corresp="#s13:l2">insgelijk</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Meest deed' de vreught <rhyme label="a" type="f">vermeeren</rhyme></l>
        <l id="s14:l2" met="3" type="-+">Het Kruys van onsen <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Daer wy in <rhyme label="a" type="f" corresp="#s14:l1">glorieeren</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">Dat gaf hy haer ook <rhyme label="b" type="m" corresp="#s14:l2">weer</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Men maekte groote <rhyme label="a" type="f">vreughden</rhyme>,</l>
        <l id="s15:l2" met="3" type="-+">Men maekte groot <rhyme label="b" type="m">jolijt</rhyme>,</l>
        <l id="s15:l3" met="3" type="-+">Een yder hem <rhyme label="a" type="f" corresp="#s15:l1">verheughden</rhyme>,</l>
        <l id="s15:l4" met="3" type="-+">Den Keyser was <rhyme label="b" type="m" corresp="#s15:l2">verblijt</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="3" type="-+">Die wouw' het Kruys gaen <rhyme label="a" type="f">brengen</rhyme></l>
        <l id="s16:l2" met="3" type="-+">Weer op sijn oude <rhyme label="b" type="m">steed</rhyme>,</l>
        <l id="s16:l3" met="3" type="-+">Maer Godt, sonder <rhyme label="a" type="f" corresp="#s16:l1">verlengen</rhyme>,</l>
        <l id="s16:l4" met="3" type="-+">Een groot mirakel <rhyme label="b" type="m" corresp="#s16:l2">deed</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="3" type="-+">Hy moght niet verder <rhyme label="a" type="f">koomen</rhyme>,</l>
        <l id="s17:l2" met="3" type="-+">Hy moght niet langer <rhyme label="b" type="m">voort</rhyme>,</l>
        <l id="s17:l3" met="3" type="-+">Het gaen was hem <rhyme label="a" type="f" corresp="#s17:l1">benoomen</rhyme>,</l>
        <l id="s17:l4" met="3" type="-+">Als hy quam by de <rhyme label="b" type="m" corresp="#s17:l2">poort</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="3" type="-+">O Keyser, weest <rhyme label="a" type="f">gedaghtigh</rhyme>,</l>
        <l id="s18:l2" met="3" type="-+">Den Patriarch <rhyme label="b" type="m">seyt</rhyme>,</l>
        <l id="s18:l3" met="3" type="-+">Gy sijt wis al te <rhyme label="a" type="f" corresp="#s18:l1">praghtigh</rhyme>,</l>
        <l id="s18:l4" met="3" type="-+">Na ´s weerelts <rhyme label="b" type="m" corresp="#s18:l2">ydelheyt</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="3" type="-+">Goods Soon gingh dit heen <rhyme label="a" type="f">bloedigh</rhyme>,</l>
        <l id="s19:l2" met="3" type="-+">In eene sleght <rhyme label="b" type="m">habijt</rhyme>,</l>
        <l id="s19:l3" met="3" type="-+">Siet of gy soo <rhyme label="a" type="f" corresp="#s19:l1">ootmoedigh</rhyme></l>
        <l id="s19:l4" met="3" type="-+">Hier sijn naevolger <rhyme label="b" type="m" corresp="#s19:l2">sijt</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="3" type="-+">Sijn kostelijke <rhyme label="a" type="f">kleeden</rhyme></l>
        <l id="s20:l2" met="3" type="-+">Hy met der daet uyt <rhyme label="b" type="m">deed</rhyme>,</l>
        <l id="s20:l3" met="3" type="-+">Bloodts voets soo gingh hy <rhyme label="a" type="f" corresp="#s20:l1">treeden</rhyme>,</l>
        <l id="s20:l4" met="3" type="-+">Dus hoorde Godt sijn <rhyme label="b" type="m" corresp="#s20:l2">beed</rhyme>´.</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="3" type="-+">Nu moght hy ´t seer wel <rhyme label="a" type="f">dragen</rhyme>,</l>
        <l id="s21:l2" met="3" type="-+">En vondt geen meer <rhyme label="b" type="m">belet</rhyme>,</l>
        <l id="s21:l3" met="3" type="-+">En heeft ´t na Goodts <rhyme label="a" type="f" corresp="#s21:l1">behagen</rhyme></l>
        <l id="s21:l4" met="3" type="-+">Weer op sijn plaets <rhyme label="b" type="m" corresp="#s21:l2">geset</rhyme>.</l>
      </lg>
      <lg id="s22" type="stanza">
        <l id="s22:l1" met="3" type="-+">Een dood is hier <rhyme label="a" type="f">verreesen</rhyme>,</l>
        <l id="s22:l2" met="3" type="-+">Veel blinden sijn <rhyme label="b" type="m">verlight</rhyme>,</l>
        <l id="s22:l3" met="3" type="-+">En ander sijn <rhyme label="a" type="f" corresp="#s22:l1">geneesen</rhyme></l>
        <l id="s22:l4" met="3" type="-+">Van pijnelijke <rhyme label="b" type="m" corresp="#s22:l2">jight</rhyme>.</l>
      </lg>
      <lg id="s23" type="stanza">
        <l id="s23:l1" met="3" type="-+">Nu moet ook heenen <rhyme label="a" type="f">vluchten</rhyme></l>
        <l id="s23:l2" met="3" type="-+">Al ´t Goddeloos <rhyme label="b" type="m">gespuys</rhyme>,</l>
        <l id="s23:l3" met="3" type="-+">Die geensins mogen <rhyme label="a" type="f" corresp="#s23:l1">luchten</rhyme></l>
        <l id="s23:l4" met="3" type="-+">Den glinster van het <rhyme label="b" type="m" corresp="#s23:l2">Kruys</rhyme>.</l>
      </lg>
      <lg id="s24" type="stanza">
        <l id="s24:l1" met="3" type="-+">Maer vroome <rhyme label="a" type="f">Katholijken</rhyme></l>
        <l id="s24:l2" met="3" type="-+">Die houden ´t Kruys in <rhyme label="b" type="m">eer</rhyme>,</l>
        <l id="s24:l3" met="3" type="-+">Terwijlen Godt laet <rhyme label="a" type="f" corresp="#s24:l1">blijken</rhyme></l>
        <l id="s24:l4" met="3" type="-+">Dat het is sijn <rhyme label="b" type="m" corresp="#s24:l2">begeer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

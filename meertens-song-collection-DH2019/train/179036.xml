  <author>Fran√ßois Halma</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ALs ik noch <rhyme label="a" type="m">jongeling</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">By broederen <rhyme label="a" type="m" corresp="#s1:l1">gering</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Geacht, een herder <rhyme label="b" type="m">was</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En 't vee, van 's morgens <rhyme label="c" type="m">vroeg</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Tot 's avondts, gade <rhyme label="c" type="m" corresp="#s1:l4">sloeg</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">'t Geen weidde in <rhyme label="b" type="m" corresp="#s1:l3">klavergras</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Zat ik in 't <rhyme label="d" type="m">lommergroen</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Van eenig dicht <rhyme label="d" type="m" corresp="#s1:l7">plantsoen</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">En loofde Godt den <rhyme label="e" type="f">Heere</rhyme>:</l>
        <l id="s1:l10" met="3" type="-+">Ik kleefde een <rhyme label="f" type="m">herdersfluit</rhyme>,</l>
        <l id="s1:l11" met="3" type="+-">Wier heldere <rhyme label="f" type="m" corresp="#s1:l10">geluit</rhyme>,</l>
        <l id="s1:l12" met="3" type="-+">Klonk van des Hoogstens <rhyme label="e" type="f" corresp="#s1:l9">eere</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Maar Godt, by wien geen <rhyme label="a" type="m">pracht</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Noch hoogheit wordt <rhyme label="a" type="m" corresp="#s2:l1">geacht</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Verkoos my van het <rhyme label="b" type="m">veldt</rhyme>:</l>
        <l id="s2:l4" met="3" type="-+">Zyn Bode, dien hy <rhyme label="c" type="m">zondt</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Die zynen last <rhyme label="c" type="m" corresp="#s2:l4">ontwondt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Heeft my het ryk <rhyme label="b" type="m" corresp="#s2:l3">voorspeldt</rhyme>.</l>
        <l id="s2:l7" met="3" type="-+">Hy heeft my 's Heeren <rhyme label="d" type="m">raadt</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Die eeuwiglyk <rhyme label="d" type="m" corresp="#s2:l7">bestaat</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Getrouwelyk <rhyme label="e" type="f">ontsloten</rhyme>,</l>
        <l id="s2:l10" met="3" type="-+">En my de kroon <rhyme label="f" type="m">belooft</rhyme>,</l>
        <l id="s2:l11" met="3" type="+-">Waarna hy op myn <rhyme label="f" type="m" corresp="#s2:l10">hoofdt</rhyme></l>
        <l id="s2:l12" met="3" type="-+">Heeft d'oli <rhyme label="e" type="f" corresp="#s2:l9">uitgegoten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Godt, die geen' staat <rhyme label="a" type="m">aanziet</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Verkoos myn Broeders <rhyme label="a" type="m" corresp="#s3:l1">niet</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Maar ging hen al <rhyme label="b" type="m">voorby</rhyme>:</l>
        <l id="s3:l4" met="3" type="-+">Hun voorrecht, trots en <rhyme label="c" type="m">waan</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Zag hy geheel niet <rhyme label="c" type="m" corresp="#s3:l4">aan</rhyme>.</l>
        <l id="s3:l6" met="3" type="-+">Omtrent de <rhyme label="b" type="m" corresp="#s3:l3">heerschappy</rhyme>.</l>
        <l id="s3:l7" met="3" type="-+">'k Heb ook den Reus <rhyme label="d" type="m">gevelt</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Den Filistynschen <rhyme label="d" type="m" corresp="#s3:l7">heldt</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Door 's Heeren <rhyme label="e" type="f">alvermogen</rhyme>.</l>
        <l id="s3:l10" met="3" type="-+">Godt quam my door zyn <rhyme label="f" type="m">handt</rhyme>,</l>
        <l id="s3:l11" met="3" type="+-">Die 't vee hoedde op het <rhyme label="f" type="m" corresp="#s3:l10">landt</rhyme>,</l>
        <l id="s3:l12" met="3" type="-+">Op Isrels troon <rhyme label="e" type="f" corresp="#s3:l9">verhoogen</rhyme>.</l>
      </lg>
    </lg>
  </text>

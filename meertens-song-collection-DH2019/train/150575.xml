  <author>Dirk Rafaelsz. Camphuysen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">GVn mijn’ beed’ een mildt <rhyme label="a" type="f">verhooren</rhyme>;</l>
        <l id="s1:l2" met="4" type="+-">Mijn geroep koom t’uwen <rhyme label="a" type="f" corresp="#s1:l1">ooren</rhyme>.</l>
        <l id="s1:l3" met="4" type="+-">Bergh, in tijden van <rhyme label="b" type="m">verdriet</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Bergh my, Heer, uw’ aenschijn <rhyme label="b" type="m" corresp="#s1:l3">niet</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">Acht op my. laet koomste <rhyme label="c" type="f">snellen</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Als ick aenroep.Want door’t <rhyme label="c" type="f" corresp="#s1:l5">quellen</rhyme></l>
        <l id="s1:l7" met="4" type="+-">Gaen, als roock, mijn dagen <rhyme label="d" type="f">henen</rhyme>.</l>
        <l id="s1:l8" met="4" type="+-">Lijdens vuyr dort merch en <rhyme label="d" type="f" corresp="#s1:l7">beenen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">’tWijl des droevens pijnlijck <rhyme label="a" type="f">vreten</rhyme></l>
        <l id="s2:l2" met="4" type="+-">’sLijfs behoefte doet <rhyme label="a" type="f" corresp="#s2:l1">vergeten</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Derft het herte, laff en <rhyme label="b" type="m">slap</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">’tNoodelijcke levens <rhyme label="b" type="m" corresp="#s2:l3">zap</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Recht als d’affgemaeyde <rhyme label="c" type="f">kruyden</rhyme>.</l>
        <l id="s2:l6" met="4" type="+-">Door des suchtens bange <rhyme label="c" type="f" corresp="#s2:l5">buyden</rhyme></l>
        <l id="s2:l7" met="4" type="+-">Kleeft het been my aen den <rhyme label="d" type="f">velle</rhyme>.</l>
        <l id="s2:l8" met="4" type="+-">Droefheydt is een <rhyme label="d" type="f" corresp="#s2:l7">zielen-helle</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">’kBen (ach!) in mijn eensaem <rhyme label="a" type="f">quijnen</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Als een roerdomp der <rhyme label="a" type="f" corresp="#s3:l1">woestijnen</rhyme>:</l>
        <l id="s3:l3" met="4" type="+-">Als een uyl die sich in’t <rhyme label="b" type="m">woudt</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Schu en ongeselligh <rhyme label="b" type="m" corresp="#s3:l3">houdt</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">’kSlijt mijn tijdt in woeligh <rhyme label="c" type="f">waken</rhyme>:</l>
        <l id="s3:l6" met="4" type="+-">Recht als ’tmusjen op de <rhyme label="c" type="f" corresp="#s3:l5">daken</rhyme></l>
        <l id="s3:l7" met="4" type="+-">Treurt wanneert sijn ga’ moet <rhyme label="d" type="f">derven</rhyme>.</l>
        <l id="s3:l8" met="4" type="+-">Droeffheydt is een stadigh <rhyme label="d" type="f" corresp="#s3:l7">sterven</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">D’ongezouten <rhyme label="a" type="f">laster-reden</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Met den hoon en <rhyme label="a" type="f" corresp="#s4:l1">smaedlijckheden</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Daer mijn vyandt, tijdt aen <rhyme label="b" type="m">tijdt</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Mijn’ ellende me’e <rhyme label="b" type="m" corresp="#s4:l3">besmijt</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Kan my ’tbroodt als asch doen <rhyme label="c" type="f">smaken</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Kan mijn dranck halff tranen <rhyme label="c" type="f" corresp="#s4:l5">maken</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Kan my allen lust <rhyme label="d" type="f">aff-snijden</rhyme>.</l>
        <l id="s4:l8" met="4" type="+-">Spot in Ramp, is ’thooghste <rhyme label="d" type="f" corresp="#s4:l7">lijden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Vwer <rhyme label="a" type="f">verontwaerdigingen</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Grimmigh aenschijn brengt mijn <rhyme label="a" type="f" corresp="#s5:l1">dingen</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Tot soo jammerlijcken <rhyme label="b" type="m">standt</rhyme>.</l>
        <l id="s5:l4" met="4" type="+-">Hoogh en laegh door uwe <rhyme label="b" type="m" corresp="#s5:l3">handt</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">Schand’lijck dalen volght mijn <rhyme label="c" type="f">klimmen</rhyme>.</l>
        <l id="s5:l6" met="4" type="+-">Ach! mijn tijdt krimpt als de <rhyme label="c" type="f" corresp="#s5:l5">schimmen</rhyme>.</l>
        <l id="s5:l7" met="4" type="+-">Als een gras verdort mijn <rhyme label="d" type="f">leven</rhyme>.</l>
        <l id="s5:l8" met="4" type="+-">Beter noyt dan kort <rhyme label="d" type="f" corresp="#s5:l7">verheven</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Maer o ghy wiens throon, <rhyme label="a" type="f">bestendigh</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Grondt-vest heeft in’t <rhyme label="a" type="f" corresp="#s6:l1">nimmer-endigh</rhyme>;</l>
        <l id="s6:l3" met="4" type="+-">Wiens geheughnis, van <rhyme label="b" type="m">geslacht</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Tot geslacht, leeft in’t <rhyme label="b" type="m" corresp="#s6:l3">gedacht</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Ghy, o Heer, (na soo veel <rhyme label="c" type="f">karmen</rhyme>)</l>
        <l id="s6:l6" met="4" type="+-">Sult u Sions eens <rhyme label="c" type="f" corresp="#s6:l5">erbarmen</rhyme>.</l>
        <l id="s6:l7" met="4" type="+-">Tijdt is’t dat sich ’tlot <rhyme label="d" type="f">hervate</rhyme>.</l>
        <l id="s6:l8" met="4" type="+-">Aller dingen is een <rhyme label="d" type="f" corresp="#s6:l7">mate</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">’tIs den hert-wensch uwer <rhyme label="a" type="f">knechten</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Haer te mogen op sien <rhyme label="a" type="f" corresp="#s7:l1">rechten</rhyme>.</l>
        <l id="s7:l3" met="4" type="+-">’tDeert hun datse sonder <rhyme label="b" type="m">loff</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Soo mismaeckt leyt in haer <rhyme label="b" type="m" corresp="#s7:l3">stoff</rhyme>.</l>
        <l id="s7:l5" met="4" type="+-">Daedt op wensch. Dies salder <rhyme label="c" type="f">vreesen</rhyme></l>
        <l id="s7:l6" met="4" type="+-">In der volcken herten <rhyme label="c" type="f" corresp="#s7:l5">wesen</rhyme></l>
        <l id="s7:l7" met="4" type="+-">Voor den grooten naem des <rhyme label="d" type="f">Heeren</rhyme>.</l>
        <l id="s7:l8" met="4" type="+-">Kracht-blijck doet gesach <rhyme label="d" type="f" corresp="#s7:l7">vermeeren</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Alles watter, hoogh in <rhyme label="a" type="f">waerde</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Kroon en scepter draeght op <rhyme label="a" type="f" corresp="#s8:l1">aerde</rhyme></l>
        <l id="s8:l3" met="4" type="+-">Sal door-troffen zijn met <rhyme label="b" type="m">schrick</rhyme></l>
        <l id="s8:l4" met="4" type="+-">In uws Godtheydts <rhyme label="b" type="m" corresp="#s8:l3">glory-blick</rhyme>.</l>
        <l id="s8:l5" met="4" type="+-">Want in Sions <rhyme label="c" type="f">weder-bouwen</rhyme></l>
        <l id="s8:l6" met="4" type="+-">Laet sich Godes eer <rhyme label="c" type="f" corresp="#s8:l5">aenschouwen</rhyme></l>
        <l id="s8:l7" met="4" type="+-">In een ongemeyne <rhyme label="d" type="f">klaerheydt</rhyme>.</l>
        <l id="s8:l8" met="4" type="+-">Sterckst beweeght bevonden <rhyme label="d" type="f" corresp="#s8:l7">waerheydt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">’sBiddens heeft hy acht <rhyme label="a" type="f">genomen</rhyme></l>
        <l id="s9:l2" met="4" type="+-">Dat van sijn’ eensame <rhyme label="a" type="f" corresp="#s9:l1">vromen</rhyme></l>
        <l id="s9:l3" met="4" type="+-">(Door den last des leets <rhyme label="b" type="m">geport</rhyme>)</l>
        <l id="s9:l4" met="4" type="+-">Voor sijn aenschijn is <rhyme label="b" type="m" corresp="#s9:l3">gestort</rhyme>.</l>
        <l id="s9:l5" met="4" type="+-">O wat schatten van <rhyme label="c" type="f">genaden</rhyme>!</l>
        <l id="s9:l6" met="4" type="+-">Op getrouwe <rhyme label="c" type="f" corresp="#s9:l5">heuge-bladen</rhyme></l>
        <l id="s9:l7" met="4" type="+-">Sta dit allen <rhyme label="d" type="f">na-geslachten</rhyme>.</l>
        <l id="s9:l8" met="4" type="+-">Groot geluck eyscht eeuwigh <rhyme label="d" type="f" corresp="#s9:l7">achten</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Van het volck noch <rhyme label="a" type="f">ongeboren</rhyme></l>
        <l id="s10:l2" met="4" type="+-">Salmen ’tloff des Heeren <rhyme label="a" type="f" corresp="#s10:l1">hooren</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Want op aerd heeft Godt het <rhyme label="b" type="m">oogh</rhyme></l>
        <l id="s10:l4" met="4" type="+-">Van sijns Hemels heyligh <rhyme label="b" type="m" corresp="#s10:l3">Hoogh</rhyme>,</l>
        <l id="s10:l5" met="4" type="+-">Om een gunstigh oor te <rhyme label="c" type="f">leenen</rhyme></l>
        <l id="s10:l6" met="4" type="+-">Tot des swaer-geboeyden <rhyme label="c" type="f" corresp="#s10:l5">steenen</rhyme>,</l>
        <l id="s10:l7" met="4" type="+-">En sijn ziel den dood’ <rhyme label="d" type="f">t’ontrucken</rhyme>.</l>
        <l id="s10:l8" met="4" type="+-">Godt-heyl ’tperck der <rhyme label="d" type="f" corresp="#s10:l7">ongelucken</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Dan sal Godes klaerheydt <rhyme label="a" type="f">blincken</rhyme></l>
        <l id="s11:l2" met="4" type="+-">En sijn naem in Sion <rhyme label="a" type="f" corresp="#s11:l1">klincken</rhyme>:</l>
        <l id="s11:l3" met="4" type="+-">Alsmen allenthalven <rhyme label="b" type="m">siet</rhyme></l>
        <l id="s11:l4" met="4" type="+-">Dat het volck te samen <rhyme label="b" type="m" corresp="#s11:l3">vliet’t</rhyme>;</l>
        <l id="s11:l5" met="4" type="+-">Dat de groote <rhyme label="c" type="f">Koninckrijcken</rhyme>,</l>
        <l id="s11:l6" met="4" type="+-">(Die, dus, Godes handt <rhyme label="c" type="f" corresp="#s11:l5">ontwijcken</rhyme>)</l>
        <l id="s11:l7" met="4" type="+-">God’ ten dienst, eerbiedlijck <rhyme label="d" type="f">naken</rhyme>.</l>
        <l id="s11:l8" met="4" type="+-">Wonder-daedt kan loff-rijck <rhyme label="d" type="f" corresp="#s11:l7">maken</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Dit’s het beeldt (vol soet <rhyme label="a" type="f">behagen</rhyme>)</l>
        <l id="s12:l2" met="4" type="+-">Van die ongeboren <rhyme label="a" type="f" corresp="#s12:l1">dagen</rhyme>:</l>
        <l id="s12:l3" met="4" type="+-">Ach! die ’twesen selver <rhyme label="b" type="m">hadt</rhyme>!</l>
        <l id="s12:l4" met="4" type="+-">Nu op ’slevens halve <rhyme label="b" type="m" corresp="#s12:l3">padt</rhyme>,</l>
        <l id="s12:l5" met="4" type="+-">Heeft hy my de kracht der <rhyme label="c" type="f">leden</rhyme></l>
        <l id="s12:l6" met="4" type="+-">En mijns tijdts besteck <rhyme label="c" type="f" corresp="#s12:l5">besneden</rhyme>.</l>
        <l id="s12:l7" met="4" type="+-">Blick van heyl, in drucks <rhyme label="d" type="f">om-geven</rhyme>,</l>
        <l id="s12:l8" met="4" type="+-">Is een laven, maer geen <rhyme label="d" type="f" corresp="#s12:l7">leven</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Moedt sal ick nochtans noch <rhyme label="a" type="f">scheppen</rhyme></l>
        <l id="s13:l2" met="4" type="+-">En aldus de lippen <rhyme label="a" type="f" corresp="#s13:l1">reppen</rhyme>:</l>
        <l id="s13:l3" met="4" type="+-">Sny, mijn Godt, mijns levens <rhyme label="b" type="m">draedt</rhyme></l>
        <l id="s13:l4" met="4" type="+-">Niet soo aff ter halver <rhyme label="b" type="m" corresp="#s13:l3">maet</rhyme>’.</l>
        <l id="s13:l5" met="4" type="+-">Laet sich in verlijcking <rhyme label="c" type="f">paren</rhyme></l>
        <l id="s13:l6" met="4" type="+-">Mijne stip, by uwer <rhyme label="c" type="f" corresp="#s13:l5">jaren</rhyme></l>
        <l id="s13:l7" met="4" type="+-">Paleloos’ <rhyme label="d" type="f">onendicheden</rhyme>.</l>
        <l id="s13:l8" met="4" type="+-">Rechte straffe staet op <rhyme label="d" type="f" corresp="#s13:l7">reden</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">Van geslachten tot <rhyme label="a" type="f">geslachten</rhyme></l>
        <l id="s14:l2" met="4" type="+-">Reyckt uw’ tijdt. selfs uwer <rhyme label="a" type="f" corresp="#s14:l1">krachten</rhyme>,</l>
        <l id="s14:l3" met="4" type="+-">Al voor-lang geschapen <rhyme label="b" type="m">werck</rhyme>,</l>
        <l id="s14:l4" met="4" type="+-">(Aerd en Hemelen) hoe <rhyme label="b" type="m" corresp="#s14:l3">sterck</rhyme>,</l>
        <l id="s14:l5" met="4" type="+-">Hoe gegrondt-vest’t, is <rhyme label="c" type="f">vergancklijck</rhyme>:</l>
        <l id="s14:l6" met="4" type="+-">Maer ghy eeuwigh en <rhyme label="c" type="f" corresp="#s14:l5">onwancklijck</rhyme>:</l>
        <l id="s14:l7" met="4" type="+-">Alle moetens’ aen’t <rhyme label="d" type="f">verouden</rhyme>.</l>
        <l id="s14:l8" met="4" type="+-">Niet dat steeds sijn nieuw kan <rhyme label="d" type="f" corresp="#s14:l7">houden</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="+-">Slijten sullens’ als de <rhyme label="a" type="f">kleeden</rhyme></l>
        <l id="s15:l2" met="4" type="+-">Van het een tot ’tander <rhyme label="a" type="f" corresp="#s15:l1">Heden</rhyme>.</l>
        <l id="s15:l3" met="4" type="+-">Door u, sy, en alle <rhyme label="b" type="m">ding</rhyme>,</l>
        <l id="s15:l4" met="4" type="+-">Eenmael ter <rhyme label="b" type="m" corresp="#s15:l3">verandering</rhyme>.</l>
        <l id="s15:l5" met="4" type="+-">Ghy, wiens ongemeten <rhyme label="c" type="f">dagen</rhyme></l>
        <l id="s15:l6" met="4" type="+-">Noyt haers durings eynde <rhyme label="c" type="f" corresp="#s15:l5">sagen</rhyme>,</l>
        <l id="s15:l7" met="4" type="+-">Ghy ontlijckt u selven <rhyme label="d" type="f">nimmer</rhyme>.</l>
        <l id="s15:l8" met="4" type="+-">Buyten Godt all’ broos <rhyme label="d" type="f" corresp="#s15:l7">getimnmer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

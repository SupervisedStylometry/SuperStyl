    <melody>Psalm 077 Datheen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Claes Stapel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">GY die zuft in twisters <rhyme label="a" type="f">boeken</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Rust dijn hoofd van twists naa <rhyme label="a" type="f" corresp="#s1:l1">zoeken</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Spijz' en Sabbath (Ioodz <rhyme label="b" type="m">gekijf</rhyme>)</l>
        <l id="s1:l4" met="4" type="+-">Heeft doch niet zoo veel om 't <rhyme label="b" type="m" corresp="#s1:l3">lijf</rhyme>,</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Dat een recht ootmoedig <rhyme label="a" type="f">Christen</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Eens daar-om behoor te <rhyme label="a" type="f" corresp="#s2:l1">twisten</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Liever 't olijf-takje <rhyme label="b" type="m">plukt</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Ziet hoe daar werd <rhyme label="b" type="m" corresp="#s2:l3">uit-gedrukt</rhyme>,</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Hoe den Sathan eer-tijds <rhyme label="a" type="f">graasde</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Toen hy 't weer-loos volk <rhyme label="a" type="f" corresp="#s3:l1">verdwaasde</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Zulx dat zy om 't kleinste <rhyme label="b" type="m">iet</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">(Waardig zijnd' om zeggen <rhyme label="b" type="m" corresp="#s3:l3">niet</rhyme>)</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Christus lichaam gingen <rhyme label="a" type="f">rukken</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Aan, men weet nau, hoe veel <rhyme label="a" type="f" corresp="#s4:l1">stukken</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">En zy bouwden kerk by <rhyme label="b" type="m">kerk</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Kiezend' elk zijn dienst en <rhyme label="b" type="m" corresp="#s4:l3">werk</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">O ramp-zaalig lichaams <rhyme label="a" type="f">deilen</rhyme>!</l>
        <l id="s5:l2" met="4" type="+-">Wat deed gy en doet <rhyme label="a" type="f" corresp="#s5:l1">verzeilen</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Meenig, die der zielen <rhyme label="b" type="m">schip</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Stukken-stoot op deeze <rhyme label="b" type="m" corresp="#s5:l3">klip</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Doch men is nu weeder <rhyme label="a" type="f">beezig</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Om 't gedeilds volk <rhyme label="a" type="f" corresp="#s6:l1">(af-weezig</rhyme>)</l>
        <l id="s6:l3" met="4" type="+-">We'er te brengen al te <rhyme label="b" type="m">zaam</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Onderling tot een <rhyme label="b" type="m" corresp="#s6:l3">lichaam</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">En gemeen Gods-dienstig <rhyme label="a" type="f">pleepen</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Daar elx gaaf, van 't hoofd <rhyme label="a" type="f" corresp="#s7:l1">verkreegen</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Word besteed tot vord'ring <rhyme label="b" type="m">van</rhyme></l>
        <l id="s7:l4" met="4" type="+-">'t Lichaams nut. Maar hoe raak <rhyme label="b" type="m" corresp="#s7:l3">an</rhyme>?</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Of 't en waar dat elk aan <rhyme label="a" type="f">deede</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Liefde, 't fondament van <rhyme label="a" type="f" corresp="#s8:l1">vreede</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">En verdraagen leerde , 't <rhyme label="b" type="m">welk</rhyme></l>
        <l id="s8:l4" met="4" type="+-">God in ons verdraagd, en <rhyme label="b" type="m" corresp="#s8:l3">elk</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Sweeg, ootmoedig <rhyme label="a" type="f">in-gedooken</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Tot God eerst had <rhyme label="a" type="f" corresp="#s9:l1">uit-gesprooken</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Maar zoo lang als eigen <rhyme label="b" type="m">zin</rhyme></l>
        <l id="s9:l4" met="4" type="+-">Heeft en houd de kerken <rhyme label="b" type="m" corresp="#s9:l3">in</rhyme>,</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">En men keerd zijn broeders <rhyme label="a" type="f">buiten</rhyme>,</l>
        <l id="s10:l2" met="4" type="+-">Die men God niet ziet <rhyme label="a" type="f" corresp="#s10:l1">uit-sluiten</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Roept men vreed: maar laas zy <rhyme label="b" type="m">vlied</rhyme>;</l>
        <l id="s10:l4" met="4" type="+-">Socht men haar men vindze <rhyme label="b" type="m" corresp="#s10:l3">niet</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Maar dat wy in liefde <rhyme label="a" type="f">branden</rhyme>,</l>
        <l id="s11:l2" met="4" type="+-">En geringe <rhyme label="a" type="f" corresp="#s11:l1">mis-verstanden</rhyme></l>
        <l id="s11:l3" met="4" type="+-">Droegen in onz' <rhyme label="b" type="m">eeven-mensch</rhyme>,</l>
        <l id="s11:l4" met="4" type="+-">Dan zoud ons, naa wil en <rhyme label="b" type="m" corresp="#s11:l3">wensch</rhyme>,</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Vreede van haar zelven <rhyme label="a" type="f">volgen</rhyme>,</l>
        <l id="s12:l2" met="4" type="+-">Al de twisten, hoe <rhyme label="a" type="f" corresp="#s12:l1">verbolgen</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">Waaren dan wel haast <rhyme label="b" type="m">geslist</rhyme>.</l>
        <l id="s12:l4" met="4" type="+-">Laat ons dan dien boozen <rhyme label="b" type="m" corresp="#s12:l3">twist</rhyme></l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Door de liefde van ons <rhyme label="a" type="f">jaagen</rhyme>.</l>
        <l id="s13:l2" met="4" type="+-">Laat ons in elk ander <rhyme label="a" type="f" corresp="#s13:l1">draagen</rhyme></l>
        <l id="s13:l3" met="4" type="+-">Draagen alles wat de <rhyme label="b" type="m">schrift</rhyme></l>
        <l id="s13:l4" met="4" type="+-">Zelf niet klaarlijk uit en <rhyme label="b" type="m" corresp="#s13:l3">zift</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">Laat het op de schrift aan <rhyme label="a" type="f">koomen</rhyme></l>
        <l id="s14:l2" met="4" type="+-">'t Vre'e toe-zeggen of <rhyme label="a" type="f" corresp="#s14:l1">verdoemen</rhyme>;</l>
        <l id="s14:l3" met="4" type="+-">Want het is verbooden <rhyme label="b" type="m">werk</rhyme>,</l>
        <l id="s14:l4" met="4" type="+-">Dat men wil in Christus <rhyme label="b" type="m" corresp="#s14:l3">kerk</rhyme></l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="+-">Reegels maaken, en die <rhyme label="a" type="f">zetten</rhyme></l>
        <l id="s15:l2" met="4" type="+-">Booven, of by Christus <rhyme label="a" type="f" corresp="#s15:l1">wetten</rhyme>:</l>
        <l id="s15:l3" met="4" type="+-">Dat dit nimmer wierd <rhyme label="b" type="m">gedaan</rhyme></l>
        <l id="s15:l4" met="4" type="+-">'t Zoud voor-waar veel beeter <rhyme label="b" type="m" corresp="#s15:l3">gaan</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="+-">Maar, God dank, die door de <rhyme label="a" type="f">wolken</rhyme></l>
        <l id="s16:l2" met="4" type="+-">Van zulk mis-verstand der <rhyme label="a" type="f" corresp="#s16:l1">volken</rhyme>,</l>
        <l id="s16:l3" met="4" type="+-">Met zijn vreedzaam <rhyme label="b" type="m">aan-gezicht</rhyme></l>
        <l id="s16:l4" met="4" type="+-">Nu 't gemoed zoo <rhyme label="b" type="m" corresp="#s16:l3">over-licht</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="+-">Dat men ziet den weg des <rhyme label="a" type="f">vreedes</rhyme>.</l>
        <l id="s17:l2" met="4" type="+-">Gaat hem in. O God! wild <rhyme label="a" type="f" corresp="#s17:l1">steedes</rhyme></l>
        <l id="s17:l3" met="4" type="+-">Stieren vreeds begonnen <rhyme label="b" type="m">werk</rhyme></l>
        <l id="s17:l4" met="4" type="+-">Naar 't gewenschte <rhyme label="b" type="m" corresp="#s17:l3">ooge-merk</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="+-">Dat dijn kudde, nu <rhyme label="a" type="f">gescheiden</rhyme>,</l>
        <l id="s18:l2" met="4" type="+-">Vreed-zaam we'er mach 't zaamen <rhyme label="a" type="f" corresp="#s18:l1">weiden</rhyme>.</l>
        <l id="s18:l3" met="4" type="+-">Dat dijn stad en <rhyme label="b" type="m">heiligdom</rhyme>,</l>
        <l id="s18:l4" met="4" type="+-">Nu verwoest, mach <rhyme label="b" type="m" corresp="#s18:l3">weeder-om</rhyme></l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="+-">Zijn her-steld, en dat de <rhyme label="a" type="f">luister</rhyme></l>
        <l id="s19:l2" met="4" type="+-">Uwes huis, voor die in 't <rhyme label="a" type="f" corresp="#s19:l1">duister</rhyme></l>
        <l id="s19:l3" met="4" type="+-">Wand'len als een licht <rhyme label="b" type="m">op-gaat</rhyme>.</l>
        <l id="s19:l4" met="4" type="+-">Heer! dit eens gelukken <rhyme label="b" type="m" corresp="#s19:l3">laat</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="+-">Dat de smaad van ons <rhyme label="a" type="f">versmaaders</rhyme></l>
        <l id="s20:l2" met="4" type="+-">'t Lachen, hand-geklap, <rhyme label="a" type="f" corresp="#s20:l1">mitsgaaders</rhyme></l>
        <l id="s20:l3" met="4" type="+-">'t Spotten, dat de spotter <rhyme label="b" type="m">spot</rhyme>,</l>
        <l id="s20:l4" met="4" type="+-">Als hy ziet zoo meenig <rhyme label="b" type="m" corresp="#s20:l3">rot</rhyme>,</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="4" type="+-">Zy gestild. En dat de <rhyme label="a" type="f">zielen</rhyme>,</l>
        <l id="s21:l2" met="4" type="+-">Die in uwen naame <rhyme label="a" type="f" corresp="#s21:l1">knielen</rhyme>?</l>
        <l id="s21:l3" met="4" type="+-">Haar verlusten, als zy <rhyme label="b" type="m">zien</rhyme></l>
        <l id="s21:l4" met="4" type="+-">Zulk een grooten heil <rhyme label="b" type="m" corresp="#s21:l3">geschien</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

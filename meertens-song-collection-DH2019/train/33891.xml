  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HEt Hemelrijke is <rhyme label="a" type="m">gelijk</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Een Koningh, die in sijne <rhyme label="a" type="m" corresp="#s1:l1">Rijk</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Van sijne knechten <rhyme label="b" type="m">rekeningh</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Af-eyschen wil van alle <rhyme label="b" type="m" corresp="#s1:l3">dingh</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Als hy sijn rekeningh <rhyme label="a" type="m">begond'</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Hy onder ander eenen <rhyme label="a" type="m" corresp="#s2:l1">vond'</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Die welk tien-duysent <rhyme label="b" type="m">tonneschat</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Aen hem in schult veraghtert <rhyme label="b" type="m" corresp="#s2:l3">hadt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">En als hy niet en hadt, van <rhyme label="a" type="m">waer</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Hy maken kon dees schulden <rhyme label="a" type="m" corresp="#s3:l1">klaer</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Soo most hy tot <rhyme label="b" type="m">betalingen</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Verkocht met wijf en <rhyme label="b" type="m" corresp="#s3:l3">kinderen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Hy nederviel, badt om <rhyme label="a" type="m">verduldt</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Ik sal betalen al mijn <rhyme label="a" type="m" corresp="#s4:l1">schuldt</rhyme>.</l>
        <l id="s4:l3" met="4" type="-+">Den Heer had' met hem <rhyme label="b" type="m">medelijdt</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">En scheld' hem al sijn schulden <rhyme label="b" type="m" corresp="#s4:l3">quijdt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Dees vond' sijn meede-kneght daer <rhyme label="a" type="m">naer</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Die hondert penningh schuldigh <rhyme label="a" type="m" corresp="#s5:l1">waer</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Hy greep hem by den keel met <rhyme label="b" type="m">spijt</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Betaelt 't geen gy mijn schuldigh <rhyme label="b" type="m" corresp="#s5:l3">sijt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Hy vallende, badt, hebt <rhyme label="a" type="m">verduldt</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">'k Sal u betalen al mijn <rhyme label="a" type="m" corresp="#s6:l1">schuldt</rhyme>.</l>
        <l id="s6:l3" met="4" type="-+">Hy wilde niet; maer sijnde <rhyme label="b" type="m">wreet</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Sijn mee'-knecht in den Kerker <rhyme label="b" type="m" corresp="#s6:l3">smeet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Dat hy daer niet kon koomen <rhyme label="a" type="m">uyt</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Voor had' betaelt den lesten <rhyme label="a" type="m" corresp="#s7:l1">duyt</rhyme>;</l>
        <l id="s7:l3" met="4" type="-+">De ander knechts bedroefden <rhyme label="b" type="m">seer</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">En seyden 't al aen haren <rhyme label="b" type="m" corresp="#s7:l3">Heer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Waer op den Heere hem <rhyme label="a" type="m">ontboodt</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">En seyde tot hem, knechte <rhyme label="a" type="m" corresp="#s8:l1">snoodt</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Ik al uw schuldt vergeeven <rhyme label="b" type="m">hadt</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Soo haestelijk als gy mijn <rhyme label="b" type="m" corresp="#s8:l3">badt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Most gy dan niet met grooter <rhyme label="a" type="m">recht</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Mee-lijden met uw' <rhyme label="a" type="m" corresp="#s9:l1">meede-knecht</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Gelijk ik met u heb <rhyme label="b" type="m">gedaen</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Van al de schulden quijt te <rhyme label="b" type="m" corresp="#s9:l3">slaen</rhyme>?</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Dus wierdt den Heer uyt gramschap <rhyme label="a" type="m">straf</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">En hem de Beulen <rhyme label="a" type="m" corresp="#s10:l1">over-gaf</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Om hem te pijnigen al <rhyme label="b" type="m">aen</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Went hy hadt voor sijn schuldt <rhyme label="b" type="m" corresp="#s10:l3">voldaen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Soo sal mijn Vader u ook <rhyme label="a" type="m">doen</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Is 't dat gy niet en geeft <rhyme label="a" type="m" corresp="#s11:l1">versoen</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Vergeevende uyt 's harten <rhyme label="b" type="m">gront</rhyme></l>
        <l id="s11:l4" met="4" type="-+">Uw' Broederen tot aller <rhyme label="b" type="m" corresp="#s11:l3">stont</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">O Jesu, maekt ons harten <rhyme label="a" type="m">vry</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Van hardigheydt, en van <rhyme label="a" type="m" corresp="#s12:l1">hady</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Op dat wy minnelijk <rhyme label="b" type="m">ontslaen</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Al die ons hebben oyt <rhyme label="b" type="m" corresp="#s12:l3">misdaen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

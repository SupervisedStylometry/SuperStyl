  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">ZYn'er zo weynig vroome <rhyme label="a" type="m">mans</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Vrouwtjes nog veel minder <rhyme label="a" type="m" corresp="#s1:l1">thans</rhyme>:</l>
        <l id="s1:l3" met="4" type="+-">Want zy houden voor <rhyme label="b" type="m">geneugt</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Ja te zeggen; neen te <rhyme label="c" type="f">meenen</rhyme>:</l>
        <l id="s1:l5" met="4" type="+-">Yder stooten blauwe <rhyme label="c" type="f" corresp="#s1:l4">scheenen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Als men hoopt op huwlyks <rhyme label="b" type="m" corresp="#s1:l3">vreugd</rhyme>.</l>
        <l id="s1:l7" met="4" type="+-">Zyn'er zo weynig vroome <rhyme label="d" type="m">mans</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Vrouwtjes nog veel minder <rhyme label="d" type="m" corresp="#s1:l7">thans</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Wie zou tog wensche na de <rhyme label="a" type="m">meid</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Welkers gal verhoolen <rhyme label="a" type="m" corresp="#s2:l1">leid</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Midden in het Woorden <rhyme label="b" type="m">zoet</rhyme>;</l>
        <l id="s2:l4" met="4" type="+-">Welkers uitgeleerde <rhyme label="c" type="f">lonken</rhyme></l>
        <l id="s2:l5" met="4" type="+-">'t Herte wel met min <rhyme label="c" type="f" corresp="#s2:l4">ontvonken</rhyme>;</l>
        <l id="s2:l6" met="4" type="+-">Maar vergiftigen het <rhyme label="b" type="m" corresp="#s2:l3">bloed</rhyme>.</l>
        <l id="s2:l7" met="4" type="+-">Zyn'er zo weynig vroome <rhyme label="d" type="m">mans</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Vrouwtjes nog veel minder <rhyme label="d" type="m" corresp="#s2:l7">thans</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Want zoo ras gy zyt <rhyme label="a" type="m">getrouwt</rhyme></l>
        <l id="s3:l2" met="4" type="+-">'t Geestig wyfje sig <rhyme label="a" type="m" corresp="#s3:l1">verstout</rhyme>.</l>
        <l id="s3:l3" met="4" type="+-">'t Huys bewind draagt zy op <rhyme label="b" type="m">zy</rhyme>.</l>
        <l id="s3:l4" met="4" type="+-">z'Is Meestresse van de <rhyme label="c" type="f">schyven</rhyme>:</l>
        <l id="s3:l5" met="4" type="+-">Dat gy dwaze zo laat <rhyme label="c" type="f" corresp="#s3:l4">dryven</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Zynde om deze ontlasting <rhyme label="b" type="m" corresp="#s3:l3">bly</rhyme>.</l>
        <l id="s3:l7" met="4" type="+-">Zyn'er zo weinig vroome <rhyme label="d" type="m">mans</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Vrouwjtes nog veel minder <rhyme label="d" type="m" corresp="#s3:l7">thans</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Wanneer gy eens goe vrinden <rhyme label="a" type="m">ziet</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Is'er wyn, maar voor u <rhyme label="a" type="m" corresp="#s4:l1">niet</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">'t Wyfje houd de sleutels <rhyme label="b" type="m">vast</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Gy meugt vloeken, gy meugt <rhyme label="c" type="f">springen</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Zy gaat om u sitten <rhyme label="c" type="f" corresp="#s4:l4">singen</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">En haald buurvrouw Smul te <rhyme label="b" type="m" corresp="#s4:l3">gast</rhyme>.</l>
        <l id="s4:l7" met="4" type="+-">Zyn'er zo weinig vroome <rhyme label="d" type="m">mans</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Vrouwtjes nog veel minder <rhyme label="d" type="m" corresp="#s4:l7">thans</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Die verteld zy hoe 't daar al <rhyme label="a" type="m">gaat</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">En hoe loens de kruin u <rhyme label="a" type="m" corresp="#s5:l1">staat</rhyme>.</l>
        <l id="s5:l3" met="4" type="+-">Wel, zegt Smeersmul, wel, men <rhyme label="b" type="m">heeft</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Nog een troost'lyk <rhyme label="c" type="f">barneveldje</rhyme></l>
        <l id="s5:l5" met="4" type="+-">By ons Teetje, voor het <rhyme label="c" type="f" corresp="#s5:l4">geldje</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Dat hy voor den wyn uit <rhyme label="b" type="m" corresp="#s5:l3">geeft</rhyme>.</l>
        <l id="s5:l7" met="4" type="+-">Zyn'er zo weinig vroome <rhyme label="d" type="m">mans</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">Vrouwtjes nog veel minder <rhyme label="d" type="m" corresp="#s5:l7">thans</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Als de Vrouw eens uit wil <rhyme label="a" type="m">gaan</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Zyt gy met het kind <rhyme label="a" type="m" corresp="#s6:l1">belaan</rhyme>;</l>
        <l id="s6:l3" met="4" type="+-">'t Zy 't u wel of qualyk <rhyme label="b" type="m">staat</rhyme>.</l>
        <l id="s6:l4" met="4" type="+-">Gy moet sujo, sujo <rhyme label="c" type="f">Kindje</rhyme></l>
        <l id="s6:l5" met="4" type="+-">Zingen, daar men wel een <rhyme label="c" type="f" corresp="#s6:l4">pintje</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Anders 's avonds drinken <rhyme label="b" type="m" corresp="#s6:l3">gaat</rhyme>.</l>
        <l id="s6:l7" met="4" type="+-">Zyn'er zo weinig vrome <rhyme label="d" type="m">mans</rhyme>,</l>
        <l id="s6:l8" met="4" type="+-">Vrouwtjes nog veel minder <rhyme label="d" type="m" corresp="#s6:l7">thans</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Daarom Jongmans weest noit zo <rhyme label="a" type="m">zot</rhyme></l>
        <l id="s7:l2" met="4" type="+-">En verwisselt tot u <rhyme label="a" type="m" corresp="#s7:l1">spot</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Trouwen voor uw <rhyme label="b" type="m">vryigheid</rhyme>.</l>
        <l id="s7:l4" met="4" type="+-">'t Onbekommert Vryers <rhyme label="c" type="f">leven</rhyme></l>
        <l id="s7:l5" met="4" type="+-">Word u nimmer weer <rhyme label="c" type="f" corresp="#s7:l4">gegeven</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Zyt g' eens aan de Vrouw <rhyme label="b" type="m" corresp="#s7:l3">verzeit</rhyme>.</l>
        <l id="s7:l7" met="4" type="+-">Syn'er zo weinig vrome <rhyme label="d" type="m">mans</rhyme>,</l>
        <l id="s7:l8" met="4" type="+-">Vrouwtjes nog veel minder <rhyme label="d" type="m" corresp="#s7:l7">thans</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Maar men vind (smaakt u nog de <rhyme label="a" type="m">trou</rhyme>)</l>
        <l id="s8:l2" met="4" type="+-">Hier of daar een brave <rhyme label="a" type="m" corresp="#s8:l1">Vrouw</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Van goe zeden, Liefde en <rhyme label="b" type="m">deugt</rhyme>.</l>
        <l id="s8:l4" met="4" type="+-">Sie dan zo een Vrouw te <rhyme label="c" type="f">krygen</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Vald het anders, wild tog <rhyme label="c" type="f" corresp="#s8:l4">zwygen</rhyme></l>
        <l id="s8:l6" met="4" type="+-">En draagt stil uw <rhyme label="b" type="m" corresp="#s8:l3">ongeneugt</rhyme>.</l>
        <l id="s8:l7" met="4" type="+-">Syn'er zo weinig vroome <rhyme label="d" type="m">mans</rhyme>,</l>
        <l id="s8:l8" met="4" type="+-">Vrouwtje nog veel minder <rhyme label="d" type="m" corresp="#s8:l7">thans</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

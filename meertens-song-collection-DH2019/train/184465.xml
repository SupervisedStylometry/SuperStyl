  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">WAt is 't verwond'de <rhyme label="a" type="f">Liefde</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Dat my zo machtig <rhyme label="b" type="m">roert</rhyme>?</l>
        <l id="s1:l3" met="3" type="-+">'t Is dit, dat u de <rhyme label="a" type="f" corresp="#s1:l1">Liefde</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Heeft in den dood <rhyme label="b" type="m" corresp="#s1:l2">gevoert</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">En myne gansche <rhyme label="c" type="m">zaligheit</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Komt van uw bloed en <rhyme label="d" type="f">sterven</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">In tyd en <rhyme label="c" type="m" corresp="#s1:l5">eeuwigheit</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Dit wil ik ook <rhyme label="a" type="f">getuigen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Zo lang ik leef op <rhyme label="b" type="m">aard</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Met diep en innig <rhyme label="a" type="f" corresp="#s2:l1">buigen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Ik wormtje, asch en <rhyme label="b" type="m" corresp="#s2:l2">aard</rhyme>;</l>
        <l id="s2:l5" met="4" type="-+">‘Het komt my nimmer uit myn <rhyme label="c" type="m">hert</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">‘Wat ik u heb <rhyme label="d" type="f">gekostet</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">‘Wat bloed en bitt're <rhyme label="c" type="m" corresp="#s2:l5">smert</rhyme>,</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ik kan het niet <rhyme label="a" type="f">vergeten</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Zo lang de zond' my <rhyme label="b" type="m">grieft</rhyme>;</l>
        <l id="s3:l3" met="3" type="-+">Uw Liefde is <rhyme label="a" type="f" corresp="#s3:l1">ongemeten</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Ik ben in u <rhyme label="b" type="m" corresp="#s3:l2">verlieft</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Dat zo een arm <rhyme label="c" type="m">wormelyn</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Uw lieve Kind <rhyme label="d" type="f">geworden</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">En ook zal Dienaar <rhyme label="c" type="m" corresp="#s3:l5">zyn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ik dank met duizend <rhyme label="a" type="f">traanen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Voor deeze groote <rhyme label="b" type="m">g'naad</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Mogt ik daarvan <rhyme label="a" type="f" corresp="#s4:l1">vermanen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Elk, naar myn kleine <rhyme label="b" type="m" corresp="#s4:l2">maat</rhyme>;</l>
        <l id="s4:l5" met="4" type="-+">Blyf Gy alleen myn Schild en <rhyme label="c" type="m">Loon</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Zo zal ik U nog <rhyme label="d" type="f">eeren</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Myn Lam, O groote <rhyme label="c" type="m" corresp="#s4:l5">Zoon</rhyme>!</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Ik heb eens <rhyme label="a" type="f">ondervonden</rhyme></l>
        <l id="s5:l2" met="3" type="-+">U dierbaar Godlyk <rhyme label="b" type="m">bloed</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Dat reinigt my van <rhyme label="a" type="f" corresp="#s5:l1">zonden</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Maakt al myn schaade <rhyme label="b" type="m" corresp="#s5:l2">goed</rhyme>;</l>
        <l id="s5:l5" met="4" type="-+">‘Dies komt het nimmer uit myn <rhyme label="c" type="m">hert</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">‘Wat ik U heb <rhyme label="d" type="f">gekostet</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">‘Wat bloed en bitt're <rhyme label="c" type="m" corresp="#s5:l5">smert</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Gy opgescheurde <rhyme label="a" type="f">wonden</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Hoe lieffelyk zyt <rhyme label="b" type="m">Gy</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Ik heb in U <rhyme label="a" type="f" corresp="#s6:l1">gevonden</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Een schuileplaats voor <rhyme label="b" type="m" corresp="#s6:l2">my</rhyme>;</l>
        <l id="s6:l5" met="4" type="-+">Nu wil ik gaarn een stofje <rhyme label="c" type="m">zyn</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Nu 'k mag des Heilands <rhyme label="d" type="f">weezen</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Verlost van eeuw'ge <rhyme label="c" type="m" corresp="#s6:l5">pyn</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Verstrojen my myn <rhyme label="a" type="f">zinnen</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Ben ik niet by myn <rhyme label="b" type="m">hert</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Als Gy 't my brengt te <rhyme label="a" type="f" corresp="#s7:l1">binnen</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Doorpriemt het my met <rhyme label="b" type="m" corresp="#s7:l2">smert</rhyme>;</l>
        <l id="s7:l5" met="4" type="-+">Daarom, myn Bruidegom, sluit <rhyme label="c" type="m">my</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Dog eeuwig in uw <rhyme label="d" type="f">wonden</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">In uwe ope <rhyme label="c" type="m" corresp="#s7:l5">zy</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Myn herte brandt van <rhyme label="a" type="f">liefde</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Naar U, myn dierbaar <rhyme label="b" type="m">Lam</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Die myne ziele <rhyme label="a" type="f" corresp="#s8:l1">griefde</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">En tot uw Kind <rhyme label="b" type="m" corresp="#s8:l2">aannam</rhyme>;</l>
        <l id="s8:l5" met="4" type="-+">Nu zy myn leeven, tyd, en <rhyme label="c" type="m">kracht</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Voor U, die zyt uit <rhyme label="d" type="f">liefde</rhyme></l>
        <l id="s8:l7" met="3" type="-+">Voor my aan 't Kruis <rhyme label="c" type="m" corresp="#s8:l5">geslacht</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Nu zal uw dood en <rhyme label="a" type="f">lyden</rhyme></l>
        <l id="s9:l2" met="3" type="-+">My steeds in 't herte <rhyme label="b" type="m">zyn</rhyme>;</l>
        <l id="s9:l3" met="3" type="-+">Ik wil zorgvuldig <rhyme label="a" type="f" corresp="#s9:l1">myden</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">'t Geen u en my maakt <rhyme label="b" type="m" corresp="#s9:l2">pyn</rhyme>;</l>
        <l id="s9:l5" met="4" type="-+">'t Is dog hier zo met my <rhyme label="c" type="m">gestelt</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Dat niets my kan <rhyme label="d" type="f">verblyden</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Als myn verlossings <rhyme label="c" type="m" corresp="#s9:l5">geld</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Hier ben ik, hert vol <rhyme label="a" type="f">liefde</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">En zielen die Gy <rhyme label="b" type="m">kent</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Wy bidden, dat g' uw' <rhyme label="a" type="f" corresp="#s10:l1">Liefde</rhyme></l>
        <l id="s10:l4" met="3" type="-+">In yders herte <rhyme label="b" type="m" corresp="#s10:l2">zendt</rhyme>.</l>
        <l id="s10:l5" met="4" type="-+">Schenk elk, en alleen in 't <rhyme label="c" type="m">gemein</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Het nodige tot <rhyme label="d" type="f">Stryders</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Laat ons ook Lamm'ren <rhyme label="c" type="m" corresp="#s10:l5">zyn</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">O, blyf ons maar <rhyme label="a" type="f">geschreeven</rhyme></l>
        <l id="s11:l2" met="3" type="-+">In onzes herten <rhyme label="b" type="m">grond</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">En by 't <rhyme label="a" type="f" corresp="#s11:l1">genaade-leeven</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Beken U ook de <rhyme label="b" type="m" corresp="#s11:l2">mond</rhyme>;</l>
        <l id="s11:l5" met="4" type="-+">Dat elk, tot op den grooten <rhyme label="c" type="m">dag</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Aan zyn ontzondigt <rhyme label="d" type="f">herte</rhyme></l>
        <l id="s11:l7" met="3" type="-+">Uw Zeegel dragen <rhyme label="c" type="m" corresp="#s11:l5">mag</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

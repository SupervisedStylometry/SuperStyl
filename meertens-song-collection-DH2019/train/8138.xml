    <tags>
      <tag standard-name="geestelijk lied" translation="spiritual song">Geestelijk lied</tag>
    </tags>
    <melody>Een meisje had een ruiter lief</melody>
    <categories/>
  <author>Jan Jansz. Deutel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">WEl hem die in Gods vreese <rhyme label="a" type="m">staet</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">En recht op sijne weghen <rhyme label="a" type="m" corresp="#s1:l1">gaet</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Die mach hem wel <rhyme label="b" type="f">verblijden</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Nu end' tot allen <rhyme label="b" type="f" corresp="#s1:l3">tijden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Hoe mach hy zijn verblijt te <rhyme label="a" type="m">recht</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Die van den Duyvel gevangen <rhyme label="a" type="m" corresp="#s2:l1">leght</rhyme>?</l>
        <l id="s2:l3" met="3" type="-+">Hoe mach hy vrolijck <rhyme label="b" type="f">wesen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Sijn siel is <rhyme label="b" type="f" corresp="#s2:l3">onghenesen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">De gantsche werelt raset <rhyme label="a" type="m">seer</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Sy houden aen de valsche <rhyme label="a" type="m" corresp="#s3:l1">leer</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Gods woort sy niet <rhyme label="b" type="f">gelooven</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Maer sy laten haer <rhyme label="b" type="f" corresp="#s3:l3">verdooven</rhyme>,</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Haer ooghen sijn so seer <rhyme label="a" type="m">verblent</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">De waerheyt is haer <rhyme label="a" type="m" corresp="#s4:l1">onbekent</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Sy rasen ende <rhyme label="b" type="f">beeren</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Om de Schaepkens te <rhyme label="b" type="f" corresp="#s4:l3">verkeeren</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">O lieve Heer siet doch op <rhyme label="a" type="m">mijn</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">En kent de arme Schaepkens <rhyme label="a" type="m" corresp="#s5:l1">dijn</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Wilt onsen trooster <rhyme label="b" type="f">wesen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Onse kranckheyt wilt <rhyme label="b" type="f" corresp="#s5:l3">ghenesen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Wy waren al verloren <rhyme label="a" type="m">siet</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Leeraer noch Herder hadden wy <rhyme label="a" type="m" corresp="#s6:l1">niet</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">De werelt schoon voor <rhyme label="b" type="f">ooghen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Die heeft ons al <rhyme label="b" type="f" corresp="#s6:l3">bedroghen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Mijn eygen vleesch verleydet <rhyme label="a" type="m">mijn</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Mijn boose sonden doen my <rhyme label="a" type="m" corresp="#s7:l1">pijn</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Mijn ghepeyns is vol <rhyme label="b" type="f">sonden</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Van Sathan lach ick <rhyme label="b" type="f" corresp="#s7:l3">ghebonden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">'Tstrick is ontween, en wy zijn <rhyme label="a" type="m">vry</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">O Heer der Heeren staet ons <rhyme label="a" type="m" corresp="#s8:l1">by</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">En wilt ons Leytsman <rhyme label="b" type="f">wesen</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Wilt u Schaepkens al <rhyme label="b" type="f" corresp="#s8:l3">ghenesen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">De waerheyt gheeft ons schoon <rhyme label="a" type="m">vermaen</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Die hier vroom strijdt, sal haer <rhyme label="a" type="m" corresp="#s9:l1">ontfaen</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Die verwint, wordt <rhyme label="b" type="f">ghegheven</rhyme></l>
        <l id="s9:l4" met="3" type="-+">De Kroon van 't eeuwigh <rhyme label="b" type="f" corresp="#s9:l3">leven</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Ghelijck als daer gheschreven <rhyme label="a" type="m">staet</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Vyer en water voor ooghen <rhyme label="a" type="m" corresp="#s10:l1">laet</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Kiest, u sal zijn <rhyme label="b" type="f">ghegheven</rhyme></l>
        <l id="s10:l4" met="3" type="-+">De doodt, oft d'eeuwigh <rhyme label="b" type="f" corresp="#s10:l3">leven</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Wacht u wel voor die u <rhyme label="a" type="m">verleyt</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Ghelijck ons Christus klaerlijck <rhyme label="a" type="m" corresp="#s11:l1">seyt</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">En laet u niet <rhyme label="b" type="f">verleyden</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Van Gods woort en wilt niet <rhyme label="b" type="f" corresp="#s11:l3">scheyden</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Het zijn dieven en moorders <rhyme label="a" type="m">plaen</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Die anders dan door Christum <rhyme label="a" type="m" corresp="#s12:l1">gaen</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Nae Ioannes <rhyme label="b" type="f">ontsluyten</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Gods woort sluyten sy <rhyme label="b" type="f" corresp="#s12:l3">buyten</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Hebt alghelijck een hert'en <rhyme label="a" type="m">sin</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">En daer vyerighe liefde <rhyme label="a" type="m" corresp="#s13:l1">in</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Als Petrus heeft <rhyme label="b" type="f">beschreven</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">So meught ghy eeuwighlijck <rhyme label="b" type="f" corresp="#s13:l3">leven</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Want den bant der <rhyme label="a" type="m">volcomenheyt</rhyme></l>
        <l id="s14:l2" met="4" type="-+">Is liefde, soo Paulus klaer <rhyme label="a" type="m" corresp="#s14:l1">seyt</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Sy moet aen ons <rhyme label="b" type="f">beklijven</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">Ende eeuwigh by ons <rhyme label="b" type="f" corresp="#s14:l3">blijven</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Weest vrolijck in u <rhyme label="a" type="m">wederspoet</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">Daer toe doet uwen vyant <rhyme label="a" type="m" corresp="#s15:l1">goet</rhyme>,</l>
        <l id="s15:l3" met="3" type="-+">Weest vroom in uwe <rhyme label="b" type="f">daghen</rhyme>,</l>
        <l id="s15:l4" met="3" type="-+">So meught ghy Godt wel <rhyme label="b" type="f" corresp="#s15:l3">behagen</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Geeft God den Vader prijs en <rhyme label="a" type="m">danck</rhyme></l>
        <l id="s16:l2" met="4" type="-+">Hy kan stercken, al die zijn <rhyme label="a" type="m" corresp="#s16:l1">kranck</rhyme>,</l>
        <l id="s16:l3" met="3" type="-+">Looft Godt tot allen <rhyme label="b" type="f">tijden</rhyme>,</l>
        <l id="s16:l4" met="3" type="-+">Die ons eeuwigh doet <rhyme label="b" type="f" corresp="#s16:l3">verblijden</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Hy is een barmhertighe <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s17:l2" met="4" type="-+">Daer in verblijde ick my <rhyme label="a" type="m" corresp="#s17:l1">seer</rhyme>,</l>
        <l id="s17:l3" met="3" type="-+">Van hem wil ick niet <rhyme label="b" type="f">scheyden</rhyme>,</l>
        <l id="s17:l4" met="3" type="-+">Hy sal my altijts <rhyme label="b" type="f" corresp="#s17:l3">gheleyden</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Waer ick my wende ofte <rhyme label="a" type="m">keer</rhyme>,</l>
        <l id="s18:l2" met="4" type="-+">Geen troost vind' ick, dan aen u <rhyme label="a" type="m" corresp="#s18:l1">Heer</rhyme>,</l>
        <l id="s18:l3" met="3" type="-+">Houdt my op goede <rhyme label="b" type="f">weyden</rhyme>,</l>
        <l id="s18:l4" met="3" type="-+">De werelt die wil my <rhyme label="b" type="f" corresp="#s18:l3">verleyden</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">Frans van Bolsweert die sanck dit <rhyme label="a" type="m">Liedt</rhyme>,</l>
        <l id="s19:l2" met="4" type="-+">In sijn ghevanckenis ist <rhyme label="a" type="m" corresp="#s19:l1">gheschiet</rhyme>,</l>
        <l id="s19:l3" met="3" type="-+">De Keyser deed' hem <rhyme label="b" type="f">lijden</rhyme>,</l>
        <l id="s19:l4" met="3" type="-+">Met Godt sal hy hem <rhyme label="b" type="f" corresp="#s19:l3">verblijden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

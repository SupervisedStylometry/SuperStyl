    <melody>Ik ben een arme pelgrim hier</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Fran√ßois Foret</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Loft God in <rhyme label="a" type="m">eeuwigheyd</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Gebenedyd moet <rhyme label="b" type="f">wezen</rhyme></l>
        <l id="s1:l3" met="5" type="-+">Uw' hooge Majesteyt // Weirdig <rhyme label="b" type="f" corresp="#s1:l2">geprezen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Gy die ons Vader <rhyme label="a" type="m">zyt</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Geweest van het <rhyme label="b" type="f">beginne</rhyme>,</l>
        <l id="s2:l3" met="5" type="-+">Verlicht ons t'aller tyd // Door uwe <rhyme label="b" type="f" corresp="#s2:l2">minne</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Wilt ons menschen te <rhyme label="a" type="m">saem</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Van ongeluk <rhyme label="b" type="f">beschermen</rhyme>,</l>
        <l id="s3:l3" met="5" type="-+">Door uw weirdigen naem // Wilt ons <rhyme label="b" type="f" corresp="#s3:l2">ontfermen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Lof zy u, Moeder <rhyme label="a" type="m">schoon'</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Maria hoog <rhyme label="b" type="f">geprezen</rhyme>,</l>
        <l id="s4:l3" met="5" type="-+">Die Moeder van Gods Zoon // Is <rhyme label="b" type="f" corresp="#s4:l2">uytgelezen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Hoogweirdig' <rhyme label="a" type="m">koninginn'</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Lof zy u t'alle <rhyme label="b" type="f">tyden</rhyme>,</l>
        <l id="s5:l3" met="5" type="-+">Want wy door uwe minn'// Ons nu <rhyme label="b" type="f" corresp="#s5:l2">verblyden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Gy waert reyn, puer, en <rhyme label="a" type="m">net</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Maget van God <rhyme label="b" type="f">bevonden</rhyme>,</l>
        <l id="s6:l3" met="5" type="-+">Nocht noyt en waert besmet // met Adams <rhyme label="b" type="f" corresp="#s6:l2">zonden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Gy zyt in <rhyme label="a" type="m">reynigheyd</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Maget altyd <rhyme label="b" type="f">gebleven</rhyme>,</l>
        <l id="s7:l3" met="5" type="-+">Door Gods voorzichtigheyd // Moeder <rhyme label="b" type="f" corresp="#s7:l2">verheven</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Van zynen eygen <rhyme label="a" type="m">Zoon</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Het licht van alle <rhyme label="b" type="f">menschen</rhyme>,</l>
        <l id="s8:l3" met="5" type="-+">Die daelt uyt zyn troon // na iders <rhyme label="b" type="f" corresp="#s8:l2">wenschen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Uyt medelyden <rhyme label="a" type="m">groot</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Quam God tot ons <rhyme label="b" type="f">bevryden</rhyme>,</l>
        <l id="s9:l3" met="5" type="-+">Verlossen uyt den nood // Door zyn groot <rhyme label="b" type="f" corresp="#s9:l2">lyden</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Gy zyt een' zuyv're <rhyme label="a" type="m">Maegd</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Maria vol van <rhyme label="b" type="f">vreugden</rhyme>,</l>
        <l id="s10:l3" met="5" type="-+">Die God voor all' behaegt // Om uwe <rhyme label="b" type="f" corresp="#s10:l2">deugden</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Ik bidde u Moeder <rhyme label="a" type="m">schoon'</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Eerweirdige <rhyme label="b" type="f">Princesse</rhyme>,</l>
        <l id="s11:l3" met="5" type="-+">Wilt wezen by uw Zoon // myn' <rhyme label="b" type="f" corresp="#s11:l2">voorspraekersse</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Wilt wezen t' allen <rhyme label="a" type="m">tyd</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Ons troost en <rhyme label="b" type="f">medecyne</rhyme>,</l>
        <l id="s12:l3" met="5" type="-+">En maekt ons eeuwig vry // Van alle <rhyme label="b" type="f" corresp="#s12:l2">pyne</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Lof dit is t'uwer <rhyme label="a" type="m">eer'</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">God en Maria <rhyme label="b" type="f">mede</rhyme>,</l>
        <l id="s13:l3" met="5" type="-+">Jont ons almagtig Heer // D'eeuwigen <rhyme label="b" type="f" corresp="#s13:l2">vrede</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

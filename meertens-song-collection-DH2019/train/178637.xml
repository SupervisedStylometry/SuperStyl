  <author>François Halma</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">REchtvaardigen, zingt <rhyme label="a" type="f">vreugdepsalmen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Zingt vrolyk in den Heer, uw' <rhyme label="b" type="m">Godt</rhyme>.</l>
        <l id="s1:l3" met="4" type="-+">U passen lof en <rhyme label="a" type="f" corresp="#s1:l1">zegegalmen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Op heldren toon, naar zyn <rhyme label="b" type="m" corresp="#s1:l2">gebodt</rhyme>.</l>
        <l id="s1:l5" met="3" type="+-">Looft met veêl en <rhyme label="c" type="f">luyten</rhyme>,</l>
        <l id="s1:l6" met="3" type="+-">Harpgeklank en <rhyme label="c" type="f" corresp="#s1:l5">fluyten</rhyme>,</l>
        <l id="s1:l7" met="3" type="+-">'s Wereldts <rhyme label="d" type="m">Opperheer</rhyme>.</l>
        <l id="s1:l8" met="3" type="+-">Wilt met keelen <rhyme label="e" type="f">paaren</rhyme></l>
        <l id="s1:l9" met="3" type="+-">'t Speeltuig van tien <rhyme label="e" type="f" corresp="#s1:l8">snaaren</rhyme>,</l>
        <l id="s1:l10" met="3" type="+-">Tot zyn roem en <rhyme label="d" type="m" corresp="#s1:l7">eer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Zingt Gode niewe <rhyme label="a" type="f">feestgezangen</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">En speelt voor hem met <rhyme label="b" type="m">vreugdegeschal</rhyme>.</l>
        <l id="s2:l3" met="4" type="-+">Want 's Heeren woordt, zoo waard <rhyme label="a" type="f" corresp="#s2:l1">t'ontfangen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Is recht, en zuivre <rhyme label="b" type="m" corresp="#s2:l2">hemelval</rhyme>.</l>
        <l id="s2:l5" met="3" type="+-">Al zyn groote <rhyme label="c" type="f">werken</rhyme></l>
        <l id="s2:l6" met="3" type="+-">Zyn, als elk kan <rhyme label="c" type="f" corresp="#s2:l5">merken</rhyme>,</l>
        <l id="s2:l7" met="3" type="+-">Vol <rhyme label="d" type="m">getrouwigheit</rhyme>.</l>
        <l id="s2:l8" met="3" type="+-">Als de zon in <rhyme label="e" type="f">klaarheit</rhyme>,</l>
        <l id="s2:l9" met="3" type="+-">Zeker in vol <rhyme label="e" type="f" corresp="#s2:l8">waarheit</rhyme>,</l>
        <l id="s2:l10" met="3" type="+-">Door dit ruim <rhyme label="d" type="m" corresp="#s2:l7">verspreidt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Hy lieft het recht, en hoog <rhyme label="a" type="f">gerichte</rhyme>.</l>
        <l id="s3:l2" met="4" type="-+">'k Zie d'aarde vol van zyne <rhyme label="b" type="m">gunst</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">En goedertierenheit; hy <rhyme label="a" type="f" corresp="#s3:l1">stichtte</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Haar door zyn goddelyke <rhyme label="b" type="m" corresp="#s3:l2">kunst</rhyme>.</l>
        <l id="s3:l5" met="3" type="+-">Door het Woordt des <rhyme label="c" type="f">Heeren</rhyme></l>
        <l id="s3:l6" met="3" type="+-">Is, gelyk wy <rhyme label="c" type="f" corresp="#s3:l5">leeren</rhyme>,</l>
        <l id="s3:l7" met="3" type="+-">'s Hemels boog <rhyme label="d" type="m">gemaakt</rhyme>:</l>
        <l id="s3:l8" met="3" type="+-">Daar aan 's hemels <rhyme label="e" type="f">transsen</rhyme>,</l>
        <l id="s3:l9" met="3" type="+-">'t Heir blinkt, vol van <rhyme label="e" type="f" corresp="#s3:l8">glanssen</rhyme>,</l>
        <l id="s3:l10" met="3" type="+-">Door zyn' Geest en <rhyme label="d" type="m" corresp="#s3:l7">blaakt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Hy brengt te zamen al de <rhyme label="a" type="f">watren</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Der zee, gelyk op eenen <rhyme label="b" type="m">hoop</rhyme>.</l>
        <l id="s4:l3" met="4" type="-+">Den afgrondt stelt hy, by het <rhyme label="a" type="f" corresp="#s4:l1">schatren</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Schatkameren voor zynen <rhyme label="b" type="m" corresp="#s4:l2">loop</rhyme>.</l>
        <l id="s4:l5" met="3" type="+-">Laat al d'aarde <rhyme label="c" type="f">vreezen</rhyme></l>
        <l id="s4:l6" met="3" type="+-">Voor den Heer, die 't <rhyme label="c" type="f" corresp="#s4:l5">wezen</rhyme></l>
        <l id="s4:l7" met="3" type="+-">Aan het schepzel <rhyme label="d" type="m">geeft</rhyme>.</l>
        <l id="s4:l8" met="3" type="+-">Laat d'inwooners <rhyme label="e" type="f">schrikken</rhyme>,</l>
        <l id="s4:l9" met="3" type="+-">Voor den Heer, en <rhyme label="e" type="f" corresp="#s4:l8">wikken</rhyme></l>
        <l id="s4:l10" met="3" type="+-">Hoe 't al door hem <rhyme label="d" type="m" corresp="#s4:l7">leeft</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Want Godt, de Schepper aller <rhyme label="a" type="f">dingen</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Spreekt, en het is 'er, naar zyn <rhyme label="b" type="m">woordt</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">'t Geen hy gebiedt in 's hemels <rhyme label="a" type="f" corresp="#s5:l1">kringen</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Of hier beneden, staat 'er <rhyme label="b" type="m" corresp="#s5:l2">voort</rhyme>.</l>
        <l id="s5:l5" met="3" type="+-">Hy verbreekt de <rhyme label="c" type="f">daaden</rhyme></l>
        <l id="s5:l6" met="3" type="+-">In het hart <rhyme label="c" type="f" corresp="#s5:l5">beraaden</rhyme></l>
        <l id="s5:l7" met="3" type="+-">Van het <rhyme label="d" type="m">heidendom</rhyme>;</l>
        <l id="s5:l8" met="3" type="+-">Sloopt der volken <rhyme label="e" type="f">krachten</rhyme>,</l>
        <l id="s5:l9" met="3" type="+-">Listen en <rhyme label="e" type="f" corresp="#s5:l8">gedachten</rhyme>,</l>
        <l id="s5:l10" met="3" type="+-">En maaktze alle <rhyme label="d" type="m" corresp="#s5:l7">stom</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Maar 's Heeren raadt bestaat <rhyme label="a" type="f">onwrikbaar</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">In eeuwigheit by 't <rhyme label="b" type="m">nageslacht</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">Zyn harts gedachten, die <rhyme label="a" type="f" corresp="#s6:l1">onwrikbaar</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Zyn voor 't verstandt, bestaan met <rhyme label="b" type="m" corresp="#s6:l2">kracht</rhyme>.</l>
        <l id="s6:l5" met="3" type="+-">Zalig moetmen <rhyme label="c" type="f">roemen</rhyme>,</l>
        <l id="s6:l6" met="3" type="+-">En gelukkig <rhyme label="c" type="f" corresp="#s6:l5">noemen</rhyme>,</l>
        <l id="s6:l7" met="3" type="+-">'t Volk wiens Godt de <rhyme label="d" type="m">Heer</rhyme></l>
        <l id="s6:l8" met="3" type="+-">Is; by hem <rhyme label="e" type="f">verkoren</rhyme>,</l>
        <l id="s6:l9" met="3" type="+-">Tot zyn erf <rhyme label="e" type="f" corresp="#s6:l8">geboren</rhyme>,</l>
        <l id="s6:l10" met="3" type="+-">Voor zyn' lof en <rhyme label="d" type="m" corresp="#s6:l7">eer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">De Heer schouwt neder uit den <rhyme label="a" type="f">hemel</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">En ziet de menschen kindren <rhyme label="b" type="m">aan</rhyme></l>
        <l id="s7:l3" met="4" type="-+">In hun bedryf en aartsch <rhyme label="a" type="f" corresp="#s7:l1">gewemel</rhyme>:</l>
        <l id="s7:l4" met="4" type="-+">Hy weegt hun goede en quaade <rhyme label="b" type="m" corresp="#s7:l2">daân</rhyme>.</l>
        <l id="s7:l5" met="3" type="+-">Hy ziet, als een <rhyme label="c" type="f">Koning</rhyme>,</l>
        <l id="s7:l6" met="3" type="+-">Uit zyn vaste <rhyme label="c" type="f" corresp="#s7:l5">woning</rhyme>,</l>
        <l id="s7:l7" met="3" type="+-">Op d'inwooners <rhyme label="d" type="m">neêr</rhyme></l>
        <l id="s7:l8" met="3" type="+-">Van den kloot der <rhyme label="e" type="f">aarde</rhyme>,</l>
        <l id="s7:l9" met="3" type="+-">Dien hy <rhyme label="e" type="f" corresp="#s7:l8">openbaarde</rhyme></l>
        <l id="s7:l10" met="3" type="+-">Zyne magt en <rhyme label="d" type="m" corresp="#s7:l7">eer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Hy vormt in 't binnenste al hun <rhyme label="a" type="f">harten</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">En let op hun <rhyme label="b" type="m">handenwerk</rhyme>:</l>
        <l id="s8:l3" met="4" type="-+">Hy valt, die zyne hoogheit <rhyme label="a" type="f" corresp="#s8:l1">tarten</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Door zyn vermogen haast te <rhyme label="b" type="m" corresp="#s8:l2">sterk</rhyme>.</l>
        <l id="s8:l5" met="3" type="+-">Men ziet geene <rhyme label="c" type="f">schaaren</rhyme></l>
        <l id="s8:l6" met="3" type="+-">Oit een' Vorst <rhyme label="c" type="f" corresp="#s8:l5">bewaaren</rhyme>,</l>
        <l id="s8:l7" met="3" type="+-">En geen dapper <rhyme label="d" type="m">heldt</rhyme></l>
        <l id="s8:l8" met="3" type="+-">Wordt door <rhyme label="e" type="f">oorlogsmagten</rhyme>,</l>
        <l id="s8:l9" met="3" type="+-">Die 't gevaar <rhyme label="e" type="f" corresp="#s8:l8">verachten</rhyme>,</l>
        <l id="s8:l10" met="3" type="+-">Ooit geredt in 't <rhyme label="d" type="m" corresp="#s8:l7">veldt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Het brieschend paardt feilt in zyn <rhyme label="a" type="f">sterkte</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">'t Bevrydt niet door zyn groote <rhyme label="b" type="m">kracht</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Daar noit zyn moedt de zege <rhyme label="a" type="f" corresp="#s9:l1">uitwerkte</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Door 's Heeren arm ons <rhyme label="b" type="m" corresp="#s9:l2">toegebragt</rhyme>.</l>
        <l id="s9:l5" met="3" type="+-">Ziet, des Heeren <rhyme label="c" type="f">oogen</rhyme></l>
        <l id="s9:l6" met="3" type="+-">Zien, uit 's hemels <rhyme label="c" type="f" corresp="#s9:l5">boogen</rhyme>,</l>
        <l id="s9:l7" met="3" type="+-">Op hen die hun <rhyme label="d" type="m">hoop</rhyme>,</l>
        <l id="s9:l8" met="3" type="+-">Al hun <rhyme label="e" type="f">hartsbetrouwen</rhyme>,</l>
        <l id="s9:l9" met="3" type="+-">Op zyn goedheit <rhyme label="e" type="f" corresp="#s9:l8">bouwen</rhyme>,</l>
        <l id="s9:l10" met="3" type="+-">In hun <rhyme label="d" type="m" corresp="#s9:l7">levensloop</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Om hun verlege ziel te <rhyme label="a" type="f">vryden</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Van 's doodts vermogen, door zyn <rhyme label="b" type="m">kracht</rhyme>:</l>
        <l id="s10:l3" met="4" type="-+">Opdatmen, in benaaude <rhyme label="a" type="f" corresp="#s10:l1">tyden</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Hen niet van honger ziet <rhyme label="b" type="m" corresp="#s10:l2">versmacht</rhyme>.</l>
        <l id="s10:l5" met="3" type="+-">Onze ziel, die <rhyme label="c" type="f">zegen</rhyme></l>
        <l id="s10:l6" met="3" type="+-">Heeft van Godt <rhyme label="c" type="f" corresp="#s10:l5">verkregen</rhyme>,</l>
        <l id="s10:l7" met="3" type="+-">Wacht voorts op den <rhyme label="d" type="m">Heer</rhyme>,</l>
        <l id="s10:l8" met="3" type="+-">Onze schildt en <rhyme label="e" type="f">hulpe</rhyme>,</l>
        <l id="s10:l9" met="3" type="+-">Dat ons niet <rhyme label="e" type="f" corresp="#s10:l8">bestulpe</rhyme></l>
        <l id="s10:l10" met="3" type="+-">'t Geen ons krenke of <rhyme label="d" type="m" corresp="#s10:l7">deer'</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Ons hart is in den Heer van <rhyme label="a" type="f">vreugden</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Verrukt, omdat wy op den <rhyme label="b" type="m">naam</rhyme></l>
        <l id="s11:l3" met="4" type="-+">Van zyne heiligheit en <rhyme label="a" type="f" corresp="#s11:l1">deugden</rhyme></l>
        <l id="s11:l4" met="4" type="-+">Betrouwen, als alleen <rhyme label="b" type="m" corresp="#s11:l2">bequaam</rhyme></l>
        <l id="s11:l5" met="3" type="+-">Om ons heil te <rhyme label="c" type="f">werken</rhyme>.</l>
        <l id="s11:l6" met="3" type="+-">Laat uw gunst ons <rhyme label="c" type="f" corresp="#s11:l5">sterken</rhyme>;</l>
        <l id="s11:l7" met="3" type="+-">Uw <rhyme label="d" type="m">barmhartigheit</rhyme></l>
        <l id="s11:l8" met="3" type="+-">Sta, Heer, als wy <rhyme label="e" type="f">hoopen</rhyme>,</l>
        <l id="s11:l9" met="3" type="+-">Altoos voor ons <rhyme label="e" type="f" corresp="#s11:l8">open</rhyme>,</l>
        <l id="s11:l10" met="3" type="+-">En zy ons <rhyme label="d" type="m" corresp="#s11:l7">bereidt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

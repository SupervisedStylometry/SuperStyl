  <author>Dirk Rafaelsz. Camphuysen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">OP u mijn hoop’ noyt treft my <rhyme label="a" type="f">schande</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Red, Heer, en ruckmer <rhyme label="b" type="m">uyt</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Na billickheydts <rhyme label="b" type="m" corresp="#s1:l2">besluyt</rhyme>.</l>
        <l id="s1:l4" met="4" type="-+">Ter be’e sta ’toor, ter hulp u <rhyme label="a" type="f" corresp="#s1:l1">handen</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Weest my een steen en <rhyme label="c" type="f">stede</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Om veylich toe te <rhyme label="c" type="f" corresp="#s1:l5">treden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Hulp-veerdigh zijt ghy, Godt <rhyme label="a" type="f">gebleken</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Mijns levens stut en <rhyme label="b" type="m">standt</rhyme>.</l>
        <l id="s2:l3" met="3" type="-+">Ontruck my ’sboosen <rhyme label="b" type="m" corresp="#s2:l2">handt</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Vol van gewelt en schelmsche <rhyme label="a" type="f" corresp="#s2:l1">treken</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Aen u, Heer, blijf ick <rhyme label="c" type="f">hangen</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Met stadigh <rhyme label="c" type="f" corresp="#s2:l5">ziel-verlangen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">De Heer mijn moedt. van kindtschen <rhyme label="a" type="f">dagen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Stond ick oyt op u <rhyme label="b" type="m">stijff</rhyme>.</l>
        <l id="s3:l3" met="3" type="-+">Ia selfs van moeders <rhyme label="b" type="m" corresp="#s3:l2">lijff</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Hebt ghy voor my al sorgh <rhyme label="a" type="f" corresp="#s3:l1">gedragen</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Ick scheen (en moestet <rhyme label="c" type="f">doogen</rhyme>)</l>
        <l id="s3:l6" met="3" type="-+">Wat vreemdts in velen <rhyme label="c" type="f" corresp="#s3:l5">oogen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Noch hoopt’ ick sterck op u in <rhyme label="a" type="f">lijden</rhyme>.</l>
        <l id="s4:l2" met="3" type="-+">Dies staegh de tonge <rhyme label="b" type="m">dy</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Vol loff en eere <rhyme label="b" type="m" corresp="#s4:l2">zy</rhyme>.</l>
        <l id="s4:l4" met="4" type="-+">Ach! laetm’ in oudtheydts doffe <rhyme label="a" type="f" corresp="#s4:l1">tijden</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Als lichaems krachten <rhyme label="c" type="f">sterven</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Vw’ by-zijn nimmer <rhyme label="c" type="f" corresp="#s4:l5">derven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Want daer is heym’lijck <rhyme label="a" type="f">mommel-praten</rhyme></l>
        <l id="s5:l2" met="3" type="-+">En raedtslagh tegen <rhyme label="b" type="m">my</rhyme></l>
        <l id="s5:l3" met="3" type="-+">By mijnes ziels <rhyme label="b" type="m" corresp="#s5:l2">party</rhyme>.</l>
        <l id="s5:l4" met="4" type="-+">Godt, seggens’, heeft hem al <rhyme label="a" type="f" corresp="#s5:l1">verlaten</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Vervolgh. vat aen. beset <rhyme label="c" type="f">hem</rhyme>.</l>
        <l id="s5:l6" met="3" type="-+">Want niemant helpt off redt <rhyme label="c" type="f" corresp="#s5:l5">hem</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Dies weest niet veer, maer wilt u <rhyme label="a" type="f">snellen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Te mijner hulp, mijn <rhyme label="b" type="m">Godt</rhyme>.</l>
        <l id="s6:l3" met="3" type="-+">Doch haer treff ramp en <rhyme label="b" type="m" corresp="#s6:l2">spot</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Die sich mijn ziel partije <rhyme label="a" type="f" corresp="#s6:l1">stellen</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">In schande zy <rhyme label="c" type="f">bedoven</rhyme></l>
        <l id="s6:l6" met="3" type="-+">All’ wie mijn heyl wil <rhyme label="c" type="f" corresp="#s6:l5">rooven</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Doch ick sal uws altijdt <rhyme label="a" type="f">verbeyden</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">En hoopen loff op <rhyme label="b" type="m">loff</rhyme>.</l>
        <l id="s7:l3" met="3" type="-+">O! ’ksie mijn mondt al <rhyme label="b" type="m" corresp="#s7:l2">stoff</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Om uw’ heyl-rijcke <rhyme label="a" type="f" corresp="#s7:l1">billickheyden</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Die ick niet weet te <rhyme label="c" type="f">tellen</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Staegh-door ten toon te <rhyme label="c" type="f" corresp="#s7:l5">stellen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Met mijn gemoedt sal ick <rhyme label="a" type="f">in-treden</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Ter veelheydt uwer <rhyme label="b" type="m">kracht</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Noyt latend’ uyt <rhyme label="b" type="m" corresp="#s8:l2">’tgedacht</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Vw’ daden der <rhyme label="a" type="f" corresp="#s8:l1">gerechticheden</rhyme>.</l>
        <l id="s8:l5" met="3" type="-+">Van ioncks hebt ghy my, <rhyme label="c" type="f">Heere</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Gestuert met wijsheydts <rhyme label="c" type="f" corresp="#s8:l5">leere</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Dies ick uw’ wond’ren sal <rhyme label="a" type="f">verkonden</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Van lagen <rhyme label="b" type="m">ouderdom</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Tot dat de grijsheydt <rhyme label="b" type="m" corresp="#s9:l2">kom</rhyme>.</l>
        <l id="s9:l4" met="4" type="-+">Verlaet my niet. gun tijdt en <rhyme label="a" type="f" corresp="#s9:l1">stonden</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Dat ick uws arms <rhyme label="c" type="f">vermogen</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Aen allen breng voor <rhyme label="c" type="f" corresp="#s9:l5">oogen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">’tLoff van uw’ vroom’ en groote <rhyme label="a" type="f">daden</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Stijght allen loff <rhyme label="b" type="m">voorby</rhyme>.</l>
        <l id="s10:l3" met="3" type="-+">Waer is een God als <rhyme label="b" type="m" corresp="#s10:l2">ghy</rhyme>?</l>
        <l id="s10:l4" met="4" type="-+">Die in-leydt en we’er brengt uyt <rhyme label="a" type="f" corresp="#s10:l1">quaden</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">uyt ellendts doodt het <rhyme label="c" type="f">leven</rhyme></l>
        <l id="s10:l6" met="3" type="-+">En Hoogh na Laegh kondt <rhyme label="c" type="f" corresp="#s10:l5">geven</rhyme>?</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Van kleyn tot groot, van groot tot <rhyme label="a" type="f">meerder</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Geraeck ick, Godt, door <rhyme label="b" type="m">dy</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Die troost-rijck sweeft om <rhyme label="b" type="m" corresp="#s11:l2">my</rhyme>.</l>
        <l id="s11:l4" met="4" type="-+">Dies sal ick u (een ernstigh <rhyme label="a" type="f" corresp="#s11:l1">eerder</rhyme>)</l>
        <l id="s11:l5" met="3" type="-+">Met soet gesang en <rhyme label="c" type="f">snaren</rhyme></l>
        <l id="s11:l6" met="3" type="-+">Volkomen trou <rhyme label="c" type="f" corresp="#s11:l5">vermaren</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Gespeel en keel, de mondt, en <rhyme label="a" type="f">’therte</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Door u uyt sijn <rhyme label="b" type="m">gequel</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Staen, Heyl’g’ in <rhyme label="b" type="m" corresp="#s12:l2">Israel</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Vw’ Deuchd’ ten roem; nu ghy (na <rhyme label="a" type="f" corresp="#s12:l1">smerte</rhyme>)</l>
        <l id="s12:l5" met="3" type="-+">Die na mijn onheyl <rhyme label="c" type="f">haken</rhyme></l>
        <l id="s12:l6" met="3" type="-+">Doet staen met roode <rhyme label="c" type="f" corresp="#s12:l5">kaken</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

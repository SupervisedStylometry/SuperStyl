  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Trouw den burgerpligt <rhyme label="a" type="f">betrachten</rhyme>;</l>
        <l id="s1:l2" met="4" type="+-">Grootsch geboorterang <rhyme label="a" type="f" corresp="#s1:l1">verächten</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Als het geld' 's volks recht en <rhyme label="b" type="m">eer</rhyme>;</l>
        <l id="s1:l4" met="4" type="+-">Des vooröordeels kleed <rhyme label="c" type="f">afleggen</rhyme>;</l>
        <l id="s1:l5" met="4" type="+-">Luid 's volks hoofden waarheid <rhyme label="c" type="f" corresp="#s1:l4">zeggen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Dit is onze Vrijheids - <rhyme label="b" type="m" corresp="#s1:l3">leer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Eerlijke armoeds - stemme <rhyme label="a" type="f">hooren</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Haar in stulp en hut <rhyme label="a" type="f" corresp="#s2:l1">opspooren</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Niet misleid door 's vleijers <rhyme label="b" type="m">schijn</rhyme>:</l>
        <l id="s2:l4" met="4" type="+-">Nimmer dan verdiensten <rhyme label="c" type="f">kroonen</rhyme>;</l>
        <l id="s2:l5" met="4" type="+-">Mild des schaamlen deugd <rhyme label="c" type="f" corresp="#s2:l4">beloonen</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Dit moet ons Gelijkheid <rhyme label="b" type="m" corresp="#s2:l3">zijn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Vaardig elk' ten dienste <rhyme label="a" type="f">streeven</rhyme>;</l>
        <l id="s3:l2" met="4" type="+-">Ongeveinsd in leer en <rhyme label="a" type="f" corresp="#s3:l1">leven</rhyme>;</l>
        <l id="s3:l3" met="4" type="+-">Wars van nijd, bedrog, <rhyme label="b" type="m">gesnap</rhyme>:</l>
        <l id="s3:l4" met="4" type="+-">Vijänden vergeeving <rhyme label="c" type="f">schenken</rhyme>;</l>
        <l id="s3:l5" met="4" type="+-">Weldoend hen ter volging <rhyme label="c" type="f" corresp="#s3:l4">wenken</rhyme>;</l>
        <l id="s3:l6" met="4" type="+-">Dit is onze <rhyme label="b" type="m" corresp="#s3:l3">Broederschap</rhyme>.</l>
      </lg>
    </lg>
  </text>

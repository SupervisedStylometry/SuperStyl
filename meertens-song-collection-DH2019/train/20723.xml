    </categories>
  <author>Willem de Swaen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Hemels Hof! komt <rhyme label="a" type="m">af</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Aen-siet eens wat een <rhyme label="a" type="m" corresp="#s1:l1">straf</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Dat voor ons' sonden <rhyme label="b" type="m">lijdt</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Uw' Koningh, en ons' <rhyme label="c" type="m">Heer</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Wien ghy bewesen <rhyme label="d" type="m">hebt</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Ten al-len tij-den <rhyme label="c" type="m" corresp="#s1:l4">eer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Aenmerckt hoe 't <rhyme label="a" type="m">Opper-Goed</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Sweet water ende <rhyme label="a" type="m" corresp="#s2:l1">bloed</rhyme></l>
        <l id="s2:l3" met="3" type="-+">In d' Olyveetschen <rhyme label="b" type="m">Hof</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Waer Judas Hem <rhyme label="c" type="m">verriet</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">En sijnen Vader <rhyme label="d" type="m">Hem</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Liet steken in 't <rhyme label="c" type="m" corresp="#s2:l4">verdriet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Hy heeft in Annas <rhyme label="a" type="m">huys</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Van een, uyt 't vuyl <rhyme label="a" type="m" corresp="#s3:l1">gespuys</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Gekregen sulck een <rhyme label="b" type="m">slagh</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Dat alle sijne <rhyme label="c" type="m">le'en</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Verschrickten, door 't <rhyme label="d" type="m">geweld</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Van boven tot <rhyme label="c" type="m" corresp="#s3:l4">bene'en</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Begeckt en <rhyme label="a" type="m">uytgelacht</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Is Jesus in der <rhyme label="a" type="m" corresp="#s4:l1">nacht</rhyme></l>
        <l id="s4:l3" met="3" type="-+">In 't huys van <rhyme label="b" type="m">Caiphas</rhyme>;</l>
        <l id="s4:l4" met="3" type="-+">Van waer Hy is <rhyme label="c" type="m">gebrocht</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Tot 't hooge Rechters <rhyme label="d" type="m">Hof</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Met koorden vast <rhyme label="c" type="m" corresp="#s4:l4">geknocht</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Daer is dien grooten <rhyme label="a" type="m">God</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Bespogen, en <rhyme label="a" type="m" corresp="#s5:l1">bespot</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Gegeesselt van den <rhyme label="b" type="m">hooft</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Tot aen de voeten <rhyme label="c" type="m">toe</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Doorwondt tot aen het <rhyme label="d" type="m">been</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Soo deer'lijck, 'k weet niet <rhyme label="c" type="m" corresp="#s5:l4">hoe</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Een scharpe doorne <rhyme label="a" type="m">kroon</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Geweest is zijne <rhyme label="a" type="m" corresp="#s6:l1">loon</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Die in sijn hooft <rhyme label="b" type="m">gehecht</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Met Rottings is <rhyme label="c" type="m">geweest</rhyme>:</l>
        <l id="s6:l5" met="3" type="-+">Soo is gequets den <rhyme label="d" type="m">Heer</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Wien d' Hell', en den Duyvel <rhyme label="c" type="m" corresp="#s6:l4">vreest</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Hy is vervult met <rhyme label="a" type="m">pijn</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Hy schijnt geen mensch te <rhyme label="a" type="m" corresp="#s7:l1">zijn</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Mismaeckt, en <rhyme label="b" type="m">ongesien</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Is 't alderschoonste <rhyme label="c" type="m">beeld</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">'t Welck van der <rhyme label="d" type="m">eeuwigheyd</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">God Vader heeft <rhyme label="c" type="m" corresp="#s7:l4">geteelt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Dat aensicht is <rhyme label="a" type="m">bedeckt</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">En schrickelijck <rhyme label="a" type="m" corresp="#s8:l1">bevleckt</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Met bloed, met snot, met <rhyme label="b" type="m">quijl</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">In 't welcken aen te <rhyme label="c" type="m">sien</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Ghy Cherubynen, <rhyme label="d" type="m">pleecht</rhyme></l>
        <l id="s8:l6" met="3" type="-+">U altijd te <rhyme label="c" type="m" corresp="#s8:l4">verblie'n</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Met meerder pijn en <rhyme label="a" type="m">smart</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Vervult wordt Jesus <rhyme label="a" type="m" corresp="#s9:l1">hart</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">En 't lichaem raeckt niet <rhyme label="b" type="m">vry</rhyme>:</l>
        <l id="s9:l4" met="3" type="-+">Want siet! daer wordt <rhyme label="c" type="m">bereydt</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Een swaren balck des <rhyme label="d" type="m">kruys</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Die Hem wordt <rhyme label="c" type="m" corresp="#s9:l4">opgeleyt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Hy valt ter aerde <rhyme label="a" type="m">ne'er</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Drie reysen we'er en <rhyme label="a" type="m" corresp="#s10:l1">we'er</rhyme>:</l>
        <l id="s10:l3" met="3" type="-+">Sijn wonden scheuren <rhyme label="b" type="m">op</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Sy vloeyen als een <rhyme label="c" type="m">Zee</rhyme>;</l>
        <l id="s10:l5" met="3" type="-+">Den wegh wordt bloedigh <rhyme label="d" type="m">root</rhyme>:</l>
        <l id="s10:l6" met="3" type="-+">Ach! wien doet dit niet <rhyme label="c" type="m" corresp="#s10:l4">wee</rhyme>?</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Ach! ick van smert <rhyme label="a" type="m">verdwijn</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Als ick mijn <rhyme label="a" type="m" corresp="#s11:l1">Medicijn</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Mijn heyl, mijn hoop, mijn <rhyme label="b" type="m">troost</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Sie aen het kruys <rhyme label="c" type="m">gehecht</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Doorboort aen hand' en <rhyme label="d" type="m">voet</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Als een moordadigh <rhyme label="c" type="m" corresp="#s11:l4">knecht</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Maria waerdste <rhyme label="a" type="m">Vrou</rhyme>!</l>
        <l id="s12:l2" met="3" type="-+">O Vrouw vervult met <rhyme label="a" type="m" corresp="#s12:l1">rouw</rhyme>!</l>
        <l id="s12:l3" met="3" type="-+">Is dit wel uwen <rhyme label="b" type="m">Soon</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Die dus mismaeckt hier <rhyme label="c" type="m">hanght</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">Na wien de Oude <rhyme label="d" type="m">Wet</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">En Nieuwe, heeft <rhyme label="c" type="m" corresp="#s12:l4">verlanght</rhyme>?</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">'t Is uwen Soon, en <rhyme label="a" type="m">kind</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Die ons dus teer <rhyme label="a" type="m" corresp="#s13:l1">bemindt</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Dat Hy voor ons <rhyme label="b" type="m">begeert</rhyme></l>
        <l id="s13:l4" met="3" type="-+">Te sterven sulck een <rhyme label="c" type="m">dood</rhyme>,</l>
        <l id="s13:l5" met="3" type="-+">Om dat Hy lossen <rhyme label="d" type="m">sou</rhyme>,</l>
        <l id="s13:l6" met="3" type="-+">Ons' zielen uyt haer <rhyme label="c" type="m" corresp="#s13:l4">noodt</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">O Jesu! was sal <rhyme label="a" type="m">ick</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">(Die stof ben ende <rhyme label="a" type="m" corresp="#s14:l1">slick</rhyme>,)</l>
        <l id="s14:l3" met="3" type="-+">Vergelden voor dees <rhyme label="b" type="m">eer</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">Die Ghy bewijst aen <rhyme label="c" type="m">my</rhyme>,</l>
        <l id="s14:l5" met="3" type="-+">Dat Ghy soo <rhyme label="d" type="m">wonderlijck</rhyme>,</l>
        <l id="s14:l6" met="3" type="-+">Van sonden my maeckt <rhyme label="c" type="m" corresp="#s14:l4">vry</rhyme>?</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">'k Sal sonden doen niet <rhyme label="a" type="m">meer</rhyme>;</l>
        <l id="s15:l2" met="3" type="-+">Dit 's Jesu! u <rhyme label="a" type="m" corresp="#s15:l1">begeer</rhyme>:</l>
        <l id="s15:l3" met="3" type="-+">Ick sal my tot de <rhyme label="b" type="m">deughd</rhyme></l>
        <l id="s15:l4" met="3" type="-+">Begeven metter <rhyme label="c" type="m">vlijdt</rhyme>:</l>
        <l id="s15:l5" met="3" type="-+">Vergun dees gracy <rhyme label="d" type="m">my</rhyme>,</l>
        <l id="s15:l6" met="3" type="-+">Van nu af, t' allen <rhyme label="c" type="m" corresp="#s15:l4">tijd</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

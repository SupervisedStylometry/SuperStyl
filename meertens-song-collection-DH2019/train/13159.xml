        <l id="s1:l1" met="4" type="-+">ALs Petrus hoort het soet <rhyme label="a" type="m">vermaen</rhyme></l>
        <l id="s1:l2" met="2" type="-+">Van sijnen <rhyme label="a" type="m" corresp="#s1:l1">Haen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Door 't aensien van den Heer <rhyme label="b" type="m">gewont</rhyme></l>
        <l id="s1:l4" met="2" type="-+">Hy weent <rhyme label="b" type="m" corresp="#s1:l3">terstont</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Den Haen u alle dagen <rhyme label="c" type="m">weckt</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">En u noyt dit exempel <rhyme label="c" type="m" corresp="#s1:l5">treckt</rhyme>.</l>

    <tags>
      <tag standard-name="schriftuurlijk lied" translation="scripture song">schriftuurlijk lied</tag>
    </tags>
    <melody>Naar oostland wil ik varen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Johan Fruytiers</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">Mijn lieue <rhyme label="a" type="f">kinderen</rhyme>//</l>
        <l id="s1:l2" met="3" type="-+">leert houden uwen <rhyme label="b" type="m">mont</rhyme>//</l>
        <l id="s1:l3" met="2" type="-+">Niet mach hem <rhyme label="a" type="f" corresp="#s1:l1">hinderen</rhyme>//</l>
        <l id="s1:l4" met="3" type="-+">diese wel hout goet <rhyme label="b" type="m" corresp="#s1:l2">rond</rhyme>//</l>
        <l id="s1:l5" met="3" type="-+">men sal hem dan niet <rhyme label="b" type="m" corresp="#s1:l2">terstont</rhyme>//</l>
        <l id="s1:l6" met="3" type="-+">int woordt begrijpen <rhyme label="c" type="m">dan</rhyme>//</l>
        <l id="s1:l7" met="3" type="-+">Ghe lijck men den <rhyme label="d" type="f">sondaren</rhyme>//</l>
        <l id="s1:l8" met="3" type="-+">die de sen niet wel <rhyme label="d" type="f" corresp="#s1:l7">bewaren</rhyme>//</l>
        <l id="s1:l9" met="4" type="+-">hier seer wel daer deur v vanghen <rhyme label="c" type="m" corresp="#s1:l6">can</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Went uwen mont tot <rhyme label="a" type="f">sweren</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Toch hier tot gheender <rhyme label="b" type="m">tijt</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Want sulcx dat is <rhyme label="a" type="f" corresp="#s2:l1">verneren</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Gods name <rhyme label="b" type="m" corresp="#s2:l2">ghebenedijt</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Een knecht diemen hier wat <rhyme label="b" type="m" corresp="#s2:l2">smijt</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Crijght strepen alsmen t'velt <rhyme label="c" type="m">roert</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Die sweert, en sal deur <rhyme label="d" type="f">desen</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Oock sonder sonde niet <rhyme label="d" type="f" corresp="#s2:l7">wesen</rhyme>,</l>
        <l id="s2:l9" met="4" type="+-">Ydelijck Gods naem niet en <rhyme label="c" type="m" corresp="#s2:l6">voert</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Wie dickwils in het <rhyme label="a" type="f">kijuen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Hem tot sweren hier <rhyme label="b" type="m">went</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Die plaech en sal niet <rhyme label="a" type="f" corresp="#s3:l1">blijuen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Van sijn huys: t'wordt <rhyme label="b" type="m" corresp="#s3:l2">gheschent</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Al sweert hy oock <rhyme label="b" type="m" corresp="#s3:l2">onbekent</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Hy sondicht euen <rhyme label="c" type="m">wel</rhyme>:</l>
        <l id="s3:l7" met="3" type="-+">Is hy oock dat <rhyme label="d" type="f">verstaende</rhyme></l>
        <l id="s3:l8" met="3" type="-+">En t'selfde hier licht <rhyme label="d" type="f" corresp="#s3:l7">slaende</rhyme>,</l>
        <l id="s3:l9" met="4" type="+-">Dubbel is sijn sonde <rhyme label="c" type="m" corresp="#s3:l6">fel</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Daer is een dootlijck <rhyme label="a" type="f">vloecken</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Daer vore soo sy <rhyme label="b" type="m">behoet</rhyme></l>
        <l id="s4:l3" met="2" type="-+">Het huys dat hier wilt <rhyme label="a" type="f" corresp="#s4:l1">soecken</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Den Heere Godt Jacobs <rhyme label="b" type="m" corresp="#s4:l2">goet</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Die Godt vreest die sulcx <rhyme label="b" type="m" corresp="#s4:l2">vroet</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Sijn stel hy soo niet <rhyme label="c" type="m">besmet</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Sijt dan in deucht <rhyme label="d" type="f">volheerdich</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Went hier niet den mont <rhyme label="d" type="f" corresp="#s4:l7">lichtuerdich</rhyme>,</l>
        <l id="s4:l9" met="4" type="+-">Want het swerende siel <rhyme label="c" type="m" corresp="#s4:l6">verplet</rhyme>.</l>
      </lg>
    </lg>
  </text>

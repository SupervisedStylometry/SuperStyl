  <author>Bernardus Busschoff</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Sorgeloose <rhyme label="a" type="m">Landt</rhyme>!</l>
        <l id="s1:l2" met="3" type="-+">Door weeld' en voorspoet <rhyme label="b" type="f">droncken</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">In alle sond' en <rhyme label="a" type="m" corresp="#s1:l1">schand'</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Gesmoort, en gantsch <rhyme label="b" type="f" corresp="#s1:l2">versoncken</rhyme>:</l>
        <l id="s1:l5" met="3" type="-+">'t Is tijdt dat gy <rhyme label="c" type="m">ontwaeckt</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Eer u de Roede <rhyme label="c" type="m" corresp="#s1:l5">raeckt</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Die Godt in toorn u veerdigh <rhyme label="c" type="m" corresp="#s1:l5">maeckt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Godt soeckt uw' heyl en <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Door allerhande <rhyme label="b" type="f">wegen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Door spoet, en <rhyme label="a" type="m" corresp="#s2:l1">tegenspoet</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Door straf en oock door <rhyme label="b" type="f" corresp="#s2:l2">zegen</rhyme>;</l>
        <l id="s2:l5" met="3" type="-+">Gy achtet, soo men <rhyme label="c" type="m">siet</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Noch 't een noch 't ander <rhyme label="c" type="m" corresp="#s2:l5">niet</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Wat doet gy Godt een groot <rhyme label="c" type="m" corresp="#s2:l5">verdriet</rhyme>!</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Hy laet sijn Heyligh <rhyme label="a" type="m">Woordt</rhyme>!</l>
        <l id="s3:l2" met="3" type="-+">U dagelijcks <rhyme label="b" type="f">verkonden</rhyme>;</l>
        <l id="s3:l3" met="3" type="-+">Maer die 't met vreught <rhyme label="a" type="m" corresp="#s3:l1">aenhoort</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Waer werdt die Mensch <rhyme label="b" type="f" corresp="#s3:l2">gevonden</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">In dit verkeert <rhyme label="c" type="m">geslacht</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">'t Welck goede leere <rhyme label="c" type="m" corresp="#s3:l5">acht</rhyme>?</l>
        <l id="s3:l7" met="4" type="-+">Ach! 't heylsaem Woordt werdt <rhyme label="c" type="m" corresp="#s3:l5">uyt-gelacht</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Elaes! wat vreughd' of <rhyme label="a" type="m">boet'</rhyme>!</l>
        <l id="s4:l2" met="3" type="-+">Doet 't ernstigh sonde <rhyme label="b" type="f">straffen</rhyme>?</l>
        <l id="s4:l3" met="3" type="-+">'t En raeckt niet in 't <rhyme label="a" type="m" corresp="#s4:l1">gemoedt</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Niet meer als 't Honde <rhyme label="b" type="f" corresp="#s4:l2">blaffen</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Of 't kraeyen van den <rhyme label="c" type="m">Haen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Of dagelijcks <rhyme label="c" type="m" corresp="#s4:l5">Klocke-slaen</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Elck blijft sijn oude wegen <rhyme label="c" type="m" corresp="#s4:l5">gaen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Men maeckt den Heer te <rhyme label="a" type="m">moe</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Men doet sijn dienaers <rhyme label="b" type="f">suchten</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">De sonden nemen <rhyme label="a" type="m" corresp="#s5:l1">toe</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">De deughden moeten <rhyme label="b" type="f" corresp="#s5:l2">vluchten</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Met groot verdriet en <rhyme label="c" type="m">spijdt</rhyme>:</l>
        <l id="s5:l6" met="3" type="-+">Seght my, waer dat gy <rhyme label="c" type="m" corresp="#s5:l5">zijdt</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">O vreese Godts, in desen <rhyme label="c" type="m" corresp="#s5:l5">tijdt</rhyme>?</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Geloove, Liefd' en <rhyme label="a" type="m">Hoop</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Soo vast aen een <rhyme label="b" type="f">gebonden</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Door een metalen <rhyme label="a" type="m" corresp="#s6:l1">knoop</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Waer werdt ghy nu <rhyme label="b" type="f" corresp="#s6:l2">gevonden</rhyme>?</l>
        <l id="s6:l5" met="3" type="-+">Ick ducht in een <rhyme label="c" type="m">woestijn</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Want dat g' in 't Landt soud' <rhyme label="c" type="m" corresp="#s6:l5">zijn</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Daer van verneemt men blijck noch <rhyme label="c" type="m" corresp="#s6:l5">schijn</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Gedult en <rhyme label="a" type="m">ned'righeydt</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Waer steeckt gy in de <rhyme label="b" type="f">hoecken</rhyme>?</l>
        <l id="s7:l3" met="3" type="-+">Waerheydt en <rhyme label="a" type="m" corresp="#s7:l1">matigheydt</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Waer salmen u doch <rhyme label="b" type="f" corresp="#s7:l2">soecken</rhyme>?</l>
        <l id="s7:l5" met="3" type="-+">Gy zijt meed' <rhyme label="c" type="m">uyt-geleydt</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">En gy <rhyme label="c" type="m" corresp="#s7:l5">rechtveerdigheydt</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">Hebt oock het Landt adieu <rhyme label="c" type="m" corresp="#s7:l5">geseydt</rhyme>!</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Beklaegelijck <rhyme label="a" type="m">verloop</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Dat all' dees' <rhyme label="b" type="f">Speelgenooten</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">t' Saem in eenen <rhyme label="a" type="m" corresp="#s8:l1">hoop</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Te Landt zijn <rhyme label="b" type="f" corresp="#s8:l2">uytgestooten</rhyme>:</l>
        <l id="s8:l5" met="3" type="-+">Sy zijn gegaen door <rhyme label="c" type="m">dwanck</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Om uwer sonden <rhyme label="c" type="m" corresp="#s8:l5">stanck</rhyme>,</l>
        <l id="s8:l7" met="4" type="-+">'t Verkeerde volck geeft die den <rhyme label="c" type="m" corresp="#s8:l5">danck</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Volck van verkeerden <rhyme label="a" type="m">sin</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Waer sal u dwaesheydt <rhyme label="b" type="f">stuyten</rhyme>?</l>
        <l id="s9:l3" met="3" type="-+">Gy haelt de sonden <rhyme label="a" type="m" corresp="#s9:l1">in</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">De deughden stoot gy <rhyme label="b" type="f" corresp="#s9:l2">buyten</rhyme>:</l>
        <l id="s9:l5" met="3" type="-+">Den zegen gy <rhyme label="c" type="m">verjaeght</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Den vloeck, 't zy Godt <rhyme label="c" type="m" corresp="#s9:l5">geklaeght</rhyme>,</l>
        <l id="s9:l7" met="4" type="-+">Gy naest, en in uw' herte <rhyme label="c" type="m" corresp="#s9:l5">draeght</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Valt, valt den Heer te <rhyme label="a" type="m">voet</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Bidt af sijn zware <rhyme label="b" type="f">plagen</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Eer hy neer-storten <rhyme label="a" type="m" corresp="#s10:l1">doet</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Sijns Toorens duyster <rhyme label="b" type="f" corresp="#s10:l2">vlagen</rhyme>:</l>
        <l id="s10:l5" met="3" type="-+">Uw' Kerf-stock is vol <rhyme label="c" type="m">schult</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Uw' maet is langh <rhyme label="c" type="m" corresp="#s10:l5">vervult</rhyme>,</l>
        <l id="s10:l7" met="4" type="-+">Misbruyckt niet langer Gods <rhyme label="c" type="m" corresp="#s10:l5">gedult</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Kastijdt ons Heer met <rhyme label="a" type="m">maet</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Geeft niet soo diepe <rhyme label="b" type="f">wonden</rhyme>;</l>
        <l id="s11:l3" met="3" type="-+">Als gy in gramschap <rhyme label="a" type="m" corresp="#s11:l1">slaet</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Verdelght all' onse <rhyme label="b" type="f" corresp="#s11:l2">sonden</rhyme>;</l>
        <l id="s11:l5" met="3" type="-+">En wilt ons leyden <rhyme label="c" type="m">voort</rhyme></l>
        <l id="s11:l6" met="3" type="-+">Door uwen Geest en <rhyme label="c" type="m" corresp="#s11:l5">Woordt</rhyme>,</l>
        <l id="s11:l7" met="4" type="-+">Soo gaen wy in door d' Enge <rhyme label="c" type="m" corresp="#s11:l5">poort</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

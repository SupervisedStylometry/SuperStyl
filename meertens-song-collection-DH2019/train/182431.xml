    <melody>Florida zo het wezen mag</melody>
  <author>Tannetge Kornelis Blok</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Wat werd men voor een vreugt <rhyme label="a" type="m">gewaer</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Hoe zijn de menschen <rhyme label="a" type="m" corresp="#s1:l1">allegaer</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Dus bijster <rhyme label="b" type="f">uytgelaten</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Het nieuwe Iaer in dese <rhyme label="c" type="m">tijd</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Maekt yder een <rhyme label="c" type="m" corresp="#s1:l4">verblijd</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">En vrolijk boven <rhyme label="b" type="f" corresp="#s1:l3">maten</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Maer als God ons het nieuwe <rhyme label="a" type="m">schenkt</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Dan is ‘t wel reden dat men <rhyme label="a" type="m" corresp="#s2:l1">denkt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Of dese nieuwen <rhyme label="b" type="f">zegen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">In ons wel eenig goed <rhyme label="c" type="m">verwekt</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">En waar toe dat het <rhyme label="c" type="m" corresp="#s2:l4">strekt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Geen heden is <rhyme label="b" type="f" corresp="#s2:l3">verkregen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">‘t Is waer wy wenschen nu <rhyme label="a" type="m">malkaer</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Een gelukzalig nieuwe <rhyme label="a" type="m" corresp="#s3:l1">Iaer</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Dit hoord ons op te <rhyme label="b" type="f">wekken</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Om desen tijd soo te <rhyme label="c" type="m">besteen</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Dat het ons mogt voor <rhyme label="c" type="m" corresp="#s3:l4">een</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Nieuw zalig Iaer <rhyme label="b" type="f" corresp="#s3:l3">verstrekken</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Veel menschen in desen <rhyme label="a" type="m">tijd</rhyme>:</l>
        <l id="s4:l2" met="4" type="-+">Te wonder met wat nieuws <rhyme label="a" type="m" corresp="#s4:l1">verblijd</rhyme>:</l>
        <l id="s4:l3" met="3" type="-+">Daer zijn zy toe <rhyme label="b" type="f">genegen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Maer ‘t beste nieuw zou waert <rhyme label="c" type="m">betraft</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Maer wierd minst om <rhyme label="c" type="m" corresp="#s4:l4">gedagt</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Daer meest is aen <rhyme label="b" type="f" corresp="#s4:l3">gelegen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Het beste nieuw dat God ons <rhyme label="a" type="m">geeft</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Is dat hy ons genesen <rhyme label="a" type="m" corresp="#s5:l1">heeft</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Van Adams oude <rhyme label="b" type="f">zonden</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Na dat Gods Zoon het zuyver <rhyme label="c" type="m">Lam</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Hier in de wereld <rhyme label="c" type="m" corresp="#s5:l4">quam</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Doen is ‘t al nieuw <rhyme label="b" type="f" corresp="#s5:l3">bevonden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Wy leven in een nieuwe <rhyme label="a" type="m">stond</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Te weten in het nieuw <rhyme label="a" type="m" corresp="#s6:l1">verbond</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Ons door Gods Zoon <rhyme label="b" type="f">verkregen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Wy hebben nu ons herten <rhyme label="c" type="m">wensch</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Nu God is tot een <rhyme label="c" type="m" corresp="#s6:l4">mensch</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Met nieuwe gunst <rhyme label="b" type="f" corresp="#s6:l3">genegen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Dwaes zijn wy nu indien ons <rhyme label="a" type="m">hert</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Ook heden niet vernieuwt en <rhyme label="a" type="m" corresp="#s7:l1">werd</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Nu al dees nieuwe <rhyme label="b" type="f">dingen</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">In ‘t nu verkregen Nieuwe <rhyme label="c" type="m">Iaer</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">En altijd ook <rhyme label="c" type="m" corresp="#s7:l4">voorwaer</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Gestadig ons <rhyme label="b" type="f" corresp="#s7:l3">omringen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Wel laten wy tot ons <rhyme label="a" type="m">profijt</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Ons dienen van den nieuwen <rhyme label="a" type="m" corresp="#s8:l1">tijd</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Die heden is <rhyme label="b" type="f">gekomen</rhyme>:</l>
        <l id="s8:l4" met="4" type="-+">En daer na tragten <rhyme label="c" type="m">aldermeest</rhyme>;</l>
        <l id="s8:l5" met="3" type="-+">Dat nu een nieuwen <rhyme label="c" type="m" corresp="#s8:l4">Geest</rhyme></l>
        <l id="s8:l6" met="3" type="-+">In ons mag zijn <rhyme label="b" type="f" corresp="#s8:l3">vernomen</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Wy moeten met het Nieuwe <rhyme label="a" type="m">Iaer</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Ons oude zonden <rhyme label="a" type="m" corresp="#s9:l1">allegaer</rhyme>;</l>
        <l id="s9:l3" met="3" type="-+">Van stonden aen <rhyme label="b" type="f">verlaten</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Want die dat zelve niet en <rhyme label="c" type="m">doet</rhyme>:</l>
        <l id="s9:l5" met="3" type="-+">Komt al dit nieuwe <rhyme label="c" type="m" corresp="#s9:l4">goed</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">In ‘t minste niet te <rhyme label="b" type="f" corresp="#s9:l3">bate</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Maer zeggen wy het oud <rhyme label="a" type="m">adieu</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Zoo werden wy volkomen <rhyme label="a" type="m" corresp="#s10:l1">nieu</rhyme>;</l>
        <l id="s10:l3" met="3" type="-+">Waer toe ons God wil <rhyme label="b" type="f">sterken</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Die ‘t nieuw maekt en eeuwig <rhyme label="c" type="m">leeft</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">En ons den wille <rhyme label="c" type="m" corresp="#s10:l4">geeft</rhyme>;</l>
        <l id="s10:l6" met="3" type="-+">Sal ook ‘t volbrengen <rhyme label="b" type="f" corresp="#s10:l3">werken</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Dan zullen wy niet meer in <rhyme label="a" type="m">schijn</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Maer in der waerheid vrolijk <rhyme label="a" type="m" corresp="#s11:l1">zijn</rhyme>:</l>
        <l id="s11:l3" met="3" type="-+">En in den geest <rhyme label="b" type="f">verblijden</rhyme></l>
        <l id="s11:l4" met="4" type="-+">En zoo verkrijgen wy te <rhyme label="c" type="m">gaer</rhyme>:</l>
        <l id="s11:l5" met="3" type="-+">Een zalig Nieuwe <rhyme label="c" type="m" corresp="#s11:l4">Iaer</rhyme>;</l>
        <l id="s11:l6" met="3" type="-+">En vreugt tot allen <rhyme label="b" type="f" corresp="#s11:l3">tijden</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">En wy vertrouwen dan voor <rhyme label="a" type="m">al</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Als wy hier van dit aerdsche <rhyme label="a" type="m" corresp="#s12:l1">dal</rhyme></l>
        <l id="s12:l3" met="3" type="-+">En uyt dit leven <rhyme label="b" type="f">scheyden</rhyme>;</l>
        <l id="s12:l4" met="4" type="-+">Dat God ons eeuwiglijk hier <rhyme label="c" type="m">naer</rhyme>:</l>
        <l id="s12:l5" met="3" type="-+">In ‘t zalig Nieuwe <rhyme label="c" type="m" corresp="#s12:l4">Iaer</rhyme></l>
        <l id="s12:l6" met="3" type="-+">Zal in den Hemel <rhyme label="b" type="f" corresp="#s12:l3">leyden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Laat af, laat af van <rhyme label="a" type="f">klagen</rhyme></l>
        <l id="s1:l2" met="3" type="+-">En u <rhyme label="b" type="m">treurigheid</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">Gy slijt u <rhyme label="a" type="f" corresp="#s1:l1">dagen</rhyme></l>
        <l id="s1:l4" met="3" type="+-">In vergeefs <rhyme label="b" type="m" corresp="#s1:l2">verwijt</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Mijn hert, beschuldig niet het <rhyme label="c" type="m">lot</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Dat u roofd door haar <rhyme label="a" type="f" corresp="#s1:l1">plagen</rhyme></l>
        <l id="s1:l7" met="3" type="+-">U gewenscht <rhyme label="c" type="m" corresp="#s1:l5">genot</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">'t Is waar, het suyver <rhyme label="a" type="f">minnen</rhyme></l>
        <l id="s2:l2" met="3" type="+-">Yscht wel <rhyme label="b" type="m">soetigheid</rhyme></l>
        <l id="s2:l3" met="2" type="-+">Die ziel en <rhyme label="a" type="f" corresp="#s2:l1">sinnen</rhyme></l>
        <l id="s2:l4" met="3" type="+-">Door haar kragt <rhyme label="b" type="m" corresp="#s2:l2">verblijd</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Daar   gy in tegendeel uw <rhyme label="c" type="m">hert</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Verteren voeld van <rhyme label="a" type="f" corresp="#s2:l1">binnen</rhyme></l>
        <l id="s2:l7" met="3" type="+-">Door een heete <rhyme label="c" type="m" corresp="#s2:l5">smert</rhyme>;</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Maar wie heeft ooit <rhyme label="a" type="f">genoten</rhyme></l>
        <l id="s3:l2" met="3" type="+-">Wat een mensch <rhyme label="b" type="m">verheugd</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Als   <rhyme label="a" type="f" corresp="#s3:l1">overgoten</rhyme></l>
        <l id="s3:l4" met="3" type="+-">Met gewenschte <rhyme label="b" type="m" corresp="#s3:l2">vreugd</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Die niet door 't al te nijdig <rhyme label="c" type="m">lot</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Hem sag eerlang <rhyme label="a" type="f" corresp="#s3:l1">verstoten</rhyme></l>
        <l id="s3:l7" met="3" type="+-">Van dat soet <rhyme label="c" type="m" corresp="#s3:l5">genot</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Wat wenscht gy dan te <rhyme label="a" type="f">sterven</rhyme></l>
        <l id="s4:l2" met="3" type="+-">In uw ziels <rhyme label="b" type="m">verdriet</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">Als gy moet <rhyme label="a" type="f" corresp="#s4:l1">derven</rhyme></l>
        <l id="s4:l4" met="3" type="+-">Dat uw ziel <rhyme label="b" type="m" corresp="#s4:l2">gebied</rhyme>:</l>
        <l id="s4:l5" met="4" type="-+">'t Geluk dat somtijds ons <rhyme label="c" type="m">verblijd</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Betaald ons duysend <rhyme label="a" type="f" corresp="#s4:l1">werven</rhyme></l>
        <l id="s4:l7" met="3" type="+-">Met <rhyme label="c" type="m" corresp="#s4:l5">rampsaligheid</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Wel, laat dan af van <rhyme label="a" type="f">klagen</rhyme></l>
        <l id="s5:l2" met="3" type="+-">En u los   <rhyme label="b" type="m">verwijt</rhyme></l>
        <l id="s5:l3" met="2" type="-+">Daar gy u <rhyme label="a" type="f" corresp="#s5:l1">dagen</rhyme></l>
        <l id="s5:l4" met="3" type="+-">Soo vergeefs in <rhyme label="b" type="m" corresp="#s5:l2">slijt</rhyme>:</l>
        <l id="s5:l5" met="4" type="-+">'t Geluk heeft nimmer u <rhyme label="c" type="m">bestraald</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Als op dat zy   met <rhyme label="a" type="f" corresp="#s5:l1">plagen</rhyme></l>
        <l id="s5:l7" met="3" type="+-">U die winst <rhyme label="c" type="m" corresp="#s5:l5">betaald</rhyme>.</l>
      </lg>
    </lg>
  </text>

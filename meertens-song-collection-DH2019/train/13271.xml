  <author>Joannes van Sambeeck</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">DEn hemel is <rhyme label="a" type="f">verwondert</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Dat noch den Heer niet <rhyme label="a" type="f" corresp="#s1:l1">dondert</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">Noch Judam <rhyme label="b" type="f">rucken</rhyme></l>
        <l id="s1:l4" met="3" type="+-">Niet en gaet in <rhyme label="b" type="f" corresp="#s1:l3">stucken</rhyme>;</l>
        <l id="s1:l5" met="3" type="-+">En niet grammoedigh <rhyme label="c" type="m">is</rhyme></l>
        <l id="s1:l6" met="2" type="-+">Op den <rhyme label="d" type="f">Verrader</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">En soo sachtmoedigh <rhyme label="c" type="m" corresp="#s1:l5">is</rhyme></l>
        <l id="s1:l8" met="2" type="-+">Als eenen <rhyme label="d" type="f" corresp="#s1:l6">Vader</rhyme>.</l>
        <l id="s1:l9" met="3" type="-+">Hy laet den Sondaer <rhyme label="e" type="f">leven</rhyme></l>
        <l id="s1:l10" met="3" type="-+">En wilt het hem <rhyme label="e" type="f" corresp="#s1:l9">vergeven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Hem siet eens Judam <rhyme label="a" type="f">lijden</rhyme>;</l>
        <l id="s2:l2" met="3" type="-+">Hy set hem aen sijn <rhyme label="a" type="f" corresp="#s2:l1">zijden</rhyme>;</l>
        <l id="s2:l3" met="2" type="-+">Gaet met hem <rhyme label="b" type="f">eten</rhyme></l>
        <l id="s2:l4" met="3" type="+-">Of het waer <rhyme label="b" type="f" corresp="#s2:l3">vergeten</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Hy niet grammoedigh <rhyme label="c" type="m">is</rhyme></l>
        <l id="s2:l6" met="2" type="-+">Op den <rhyme label="d" type="f">Verrader</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">En soo sachtmoedigh <rhyme label="c" type="m" corresp="#s2:l5">is</rhyme></l>
        <l id="s2:l8" met="2" type="-+">Als eenen <rhyme label="d" type="f" corresp="#s2:l6">Vader</rhyme>.</l>
        <l id="s2:l9" met="3" type="-+">Hy laet den Sondaer <rhyme label="e" type="f">leven</rhyme></l>
        <l id="s2:l10" met="3" type="-+">En wilt het hem <rhyme label="e" type="f" corresp="#s2:l9">vergeven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Om weer hem te <rhyme label="a" type="f">bekeeren</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Siet oock den Heer der <rhyme label="a" type="f" corresp="#s3:l1">Heeren</rhyme></l>
        <l id="s3:l3" met="2" type="-+">Met sijne <rhyme label="b" type="f">tranen</rhyme></l>
        <l id="s3:l4" met="3" type="+-">Drymael hem <rhyme label="b" type="f" corresp="#s3:l3">vermanen</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Hy niet grammoedigh <rhyme label="c" type="m">is</rhyme></l>
        <l id="s3:l6" met="2" type="-+">Op den <rhyme label="d" type="f">Verrader</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">En soo sachtmoedigh <rhyme label="c" type="m" corresp="#s3:l5">is</rhyme></l>
        <l id="s3:l8" met="2" type="-+">Als eenen <rhyme label="d" type="f" corresp="#s3:l6">Vader</rhyme>.</l>
        <l id="s3:l9" met="3" type="-+">Hy laet den Sondaer <rhyme label="e" type="f">leven</rhyme></l>
        <l id="s3:l10" met="3" type="-+">En wilt het hem <rhyme label="e" type="f" corresp="#s3:l9">vergeven</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Hy wascht hem oock sijn <rhyme label="a" type="f">voeten</rhyme></l>
        <l id="s4:l2" met="3" type="-+">En kan hem niet <rhyme label="a" type="f" corresp="#s4:l1">versoeten</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">Om weer <rhyme label="b" type="f">t'ontfangen</rhyme></l>
        <l id="s4:l4" met="3" type="+-">Kust hem voor sijn <rhyme label="b" type="f" corresp="#s4:l3">wangen</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Hy niet grammoedigh <rhyme label="c" type="m">is</rhyme></l>
        <l id="s4:l6" met="2" type="-+">Op den <rhyme label="d" type="f">Verrader</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">En soo sachtmoedigh <rhyme label="c" type="m" corresp="#s4:l5">is</rhyme></l>
        <l id="s4:l8" met="2" type="-+">Als eenen <rhyme label="d" type="f" corresp="#s4:l6">Vader</rhyme>.</l>
        <l id="s4:l9" met="3" type="-+">Hy laet den Sondaer <rhyme label="e" type="f">leven</rhyme></l>
        <l id="s4:l10" met="3" type="-+">En wilt het hem <rhyme label="e" type="f" corresp="#s4:l9">vergeven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">O wereldt vol <rhyme label="a" type="f">gebreken</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Leert hier u gramschap <rhyme label="a" type="f" corresp="#s5:l1">breken</rhyme>.</l>
        <l id="s5:l3" met="2" type="-+">Sijn langh <rhyme label="b" type="f">verwachten</rhyme></l>
        <l id="s5:l4" met="3" type="+-">Laet u weer <rhyme label="b" type="f" corresp="#s5:l3">versachten</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Hy niet grammoedigh <rhyme label="c" type="m">is</rhyme></l>
        <l id="s5:l6" met="2" type="-+">Op den <rhyme label="d" type="f">Verrader</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">En soo sachtmoedigh <rhyme label="c" type="m" corresp="#s5:l5">is</rhyme></l>
        <l id="s5:l8" met="2" type="-+">Als eenen <rhyme label="d" type="f" corresp="#s5:l6">Vader</rhyme>.</l>
        <l id="s5:l9" met="3" type="-+">Hy laet den Sondaer <rhyme label="e" type="f">leven</rhyme></l>
        <l id="s5:l10" met="3" type="-+">En wilt het hem <rhyme label="e" type="f" corresp="#s5:l9">vergeven</rhyme>.</l>
      </lg>
    </lg>
  </text>

  <author>Jan Mommaert</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">EN pryst my doch niet meer het <rhyme label="a" type="m">Hof</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Noch syne sachte <rhyme label="b" type="f">lusten</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Men moeter om wat <rhyme label="a" type="m" corresp="#s1:l1">minne-stof</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Sy-selven wel <rhyme label="b" type="f" corresp="#s1:l2">ont-rusten</rhyme>;</l>
        <l id="s1:l5" met="4" type="-+">'t Is in den bosch en in het <rhyme label="c" type="m">velt</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Dat liefd' syn rechte rolle <rhyme label="c" type="m" corresp="#s1:l5">spelt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Daer siet-men aen een stille <rhyme label="a" type="m">vliet</rhyme></l>
        <l id="s2:l2" met="3" type="-+">De liefd' van d'een en <rhyme label="b" type="f">d'ander</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Daer is het dat-men zwermen <rhyme label="a" type="m" corresp="#s2:l1">siet</rhyme></l>
        <l id="s2:l4" met="3" type="-+">De Liefjens met <rhyme label="b" type="f" corresp="#s2:l2">malkander</rhyme>:</l>
        <l id="s2:l5" met="4" type="-+">'t Is in den bosch en in het <rhyme label="c" type="m">velt</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Dat liefd' haer rechte rolle <rhyme label="c" type="m" corresp="#s2:l5">spelt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Schoon hier oft daer een <rhyme label="a" type="m">Herderin</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Gheraeckt in wat <rhyme label="b" type="f">misnoeghen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Den Herder weet door syne <rhyme label="a" type="m" corresp="#s3:l1">min</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Haer sinnen we'er te <rhyme label="b" type="f" corresp="#s3:l2">voeghen</rhyme>:</l>
        <l id="s3:l5" met="4" type="-+">'t Is in den bosch en in het <rhyme label="c" type="m">velt</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Dat liefd' haer rechte rolle <rhyme label="c" type="m" corresp="#s3:l5">spelt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">By wylen onder eenen <rhyme label="a" type="m">boom</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Speelt Thyrsis op een <rhyme label="b" type="f">fluytjen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En brengt soo buyten allen <rhyme label="a" type="m" corresp="#s4:l1">schroom</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Een vreught self in het <rhyme label="b" type="f" corresp="#s4:l2">kruytjen</rhyme>:</l>
        <l id="s4:l5" met="4" type="-+">Want in den bosch en in het <rhyme label="c" type="m">velt</rhyme></l>
        <l id="s4:l6" met="4" type="-+">De liefd' haer rechte rolle <rhyme label="c" type="m" corresp="#s4:l5">spelt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ten eynd' men sieter soo veel <rhyme label="a" type="m">vreught</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Dat sy een lust sou <rhyme label="b" type="f">gheven</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Aen al de ghen' om met ons <rhyme label="a" type="m" corresp="#s5:l1">jeught</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Soo wenschelyck te <rhyme label="b" type="f" corresp="#s5:l2">leven</rhyme>.</l>
        <l id="s5:l5" met="4" type="-+">'t Is in den bosch en in het <rhyme label="c" type="m">velt</rhyme></l>
        <l id="s5:l6" met="4" type="-+">Dat liefd' haer rechte rolle <rhyme label="c" type="m" corresp="#s5:l5">spelt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

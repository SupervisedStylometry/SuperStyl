  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">PHillis liet haer Bijtertjes <rhyme label="a" type="f">weyden</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">En dwalend' naer 't Bossje <rhyme label="b" type="m">Treen</rhyme>,</l>
        <l id="s1:l3" met="6" type="-+">En sy gingh haer soetjens vermeyde / vermeyd <rhyme label="a" type="f" corresp="#s1:l1">evermeyde</rhyme></l>
        <l id="s1:l4" met="3" type="+-">Langhs den Amstel <rhyme label="b" type="m" corresp="#s1:l2">heen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Daer de Water Nimphjes vast <rhyme label="a" type="f">speelden</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Langs den Oever op het <rhyme label="b" type="m">Riet</rhyme>,</l>
        <l id="s2:l3" met="6" type="-+">Die sy onderwijle meedeelden // meedeelden // <rhyme label="a" type="f" corresp="#s2:l1">meedeelden</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">Met een Geestich <rhyme label="b" type="m" corresp="#s2:l2">Liet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Thirses seylende tot sijn <rhyme label="a" type="f">vermaecke</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Inde lieve <rhyme label="b" type="m">Morgenstont</rhyme>,</l>
        <l id="s3:l3" met="6" type="-+">Quam ten eynde dees plaets te genake // genake // <rhyme label="a" type="f" corresp="#s3:l1">genake</rhyme></l>
        <l id="s3:l4" met="3" type="+-">Daer hy Philis <rhyme label="b" type="m" corresp="#s3:l2">vont</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">'t Scheen de seylen en touwen <rhyme label="a" type="f">sich-voechden</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Naer de galm van Philis <rhyme label="b" type="m">sangh</rhyme>,</l>
        <l id="s4:l3" met="6" type="-+">En den vlammenden Harder so noegden // so noegden // so <rhyme label="a" type="f" corresp="#s4:l1">noegden</rhyme>,</l>
        <l id="s4:l4" met="3" type="+-">In sijn groot <rhyme label="b" type="m" corresp="#s4:l2">verlangh</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Dat hy suijmde sijn Scheepje te <rhyme label="a" type="f">Wenden</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Van die lieffelijcke <rhyme label="b" type="m">Ree</rhyme>,</l>
        <l id="s5:l3" met="6" type="-+">Tot hy schaloos verviel in het ende // het ende // het <rhyme label="a" type="f" corresp="#s5:l1">ende</rhyme>,</l>
        <l id="s5:l4" met="3" type="+-">Dies hy Schip-breuck <rhyme label="b" type="m" corresp="#s5:l2">lee</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Denck hoe wee dat Phillis te <rhyme label="a" type="f">moe-was</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Doen sy sach haer vrindt in <rhyme label="b" type="m">noot</rhyme>.</l>
        <l id="s6:l3" met="6" type="-+">Die vast riep och kompt hier na toe ras, na toe ras, na toe <rhyme label="a" type="f" corresp="#s6:l1">ras</rhyme>,</l>
        <l id="s6:l4" met="3" type="+-">Ruck my uyt de <rhyme label="b" type="m" corresp="#s6:l2">doodt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Maer de vlugge water <rhyme label="a" type="f">Godinne</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Brachten Thirsis aen den <rhyme label="b" type="m">kant</rhyme>.</l>
        <l id="s7:l3" met="6" type="-+">Daer hem Phillis uyt liefde en minne // en minne // en <rhyme label="a" type="f" corresp="#s7:l1">minne</rhyme>,</l>
        <l id="s7:l4" met="3" type="+-">Varder hielp te <rhyme label="b" type="m" corresp="#s7:l2">Lant</rhyme>.</l>
      </lg>
    </lg>
  </text>

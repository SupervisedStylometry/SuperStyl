    <melody>Gij die Christus hebt aangedaan</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">GHy die Christum hebt <rhyme label="a" type="m">aenghedaen</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Sijt ghy met hem <rhyme label="a" type="m" corresp="#s1:l1">opghestaen</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Ende hebt dat <rhyme label="b" type="f">voorghenomen</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Niet weder in doude leuen te <rhyme label="a" type="m" corresp="#s1:l1">gaen</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Soo laet ons worden <rhyme label="b" type="f" corresp="#s1:l3">volcomen</rhyme></l>
        <l id="s1:l6" met="2" type="-+">Uruchtbaer <rhyme label="b" type="f" corresp="#s1:l3">boomen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Een yeghelijck boom dit <rhyme label="a" type="m">ouerdenckt</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Die gheen goede vruchten voort en <rhyme label="a" type="m" corresp="#s2:l1">brengt</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Sal worden <rhyme label="b" type="f">afghehouwen</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Neempt waer die gauen die Godt v <rhyme label="a" type="m" corresp="#s2:l1">schenct</rhyme></l>
        <l id="s2:l5" met="3" type="-+">En oeffene die <rhyme label="b" type="f" corresp="#s2:l3">ghetrouwe</rhyme></l>
        <l id="s2:l6" met="2" type="-+">Sonder <rhyme label="b" type="f" corresp="#s2:l3">rouwe</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Christus spreeckt hier wel op <rhyme label="a" type="m">siet</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Sonder my vermoecht ghy <rhyme label="a" type="m" corresp="#s3:l1">niet</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Laet ons zijn gauen <rhyme label="b" type="f">verwachten</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Op dat hy ons niet af en <rhyme label="a" type="m" corresp="#s3:l1">snijt</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Als wy gheen vruchten en <rhyme label="b" type="f" corresp="#s3:l3">brachten</rhyme></l>
        <l id="s3:l6" met="2" type="-+">Door zijn <rhyme label="b" type="f" corresp="#s3:l3">crachten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Als wy ons al voort quaet <rhyme label="a" type="m">behoen</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Soo moeten wy ons tot dat goede <rhyme label="a" type="m" corresp="#s4:l1">spoen</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Wy en moghen niet ledich <rhyme label="b" type="f">wesen</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Daer staet die Godt vreest die sal goet <rhyme label="a" type="m" corresp="#s4:l1">doen</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Als wy in Ecclesiasticus <rhyme label="b" type="f" corresp="#s4:l3">lesen</rhyme></l>
        <l id="s4:l6" met="2" type="-+">Acht op <rhyme label="b" type="f" corresp="#s4:l3">desen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Doet nv aen alle menschen <rhyme label="a" type="m">goet</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Uoor al thuys der gheloouighen <rhyme label="a" type="m" corresp="#s5:l1">voet</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Spreect Paulus wilt dit <rhyme label="b" type="f">vaten</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Uoort maect ons Christus Iesus <rhyme label="a" type="m" corresp="#s5:l1">vroet</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Dat wy moeten comen te <rhyme label="b" type="f" corresp="#s5:l3">baten</rhyme></l>
        <l id="s5:l6" met="2" type="-+">Die ons <rhyme label="b" type="f" corresp="#s5:l3">haten</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Wie goet weet te doen tot eenigher <rhyme label="a" type="m">stont</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Doet hijt niet het is hem <rhyme label="a" type="m" corresp="#s6:l1">sondt</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Laet ons toch niet <rhyme label="b" type="f">vertraghen</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Quaem die Heer en hy ons slapende <rhyme label="a" type="m" corresp="#s6:l1">vont</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Wy souden seker veel <rhyme label="b" type="f" corresp="#s6:l3">slaghen</rhyme></l>
        <l id="s6:l6" met="2" type="-+">Moeten <rhyme label="b" type="f" corresp="#s6:l3">draghen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Hier om zijt neerstich in de <rhyme label="a" type="m">weer</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Hebt altijt acht op Christus <rhyme label="a" type="m" corresp="#s7:l1">leer</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Laet v daer niet af <rhyme label="b" type="f">leyden</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Den hertooch des leuens een lieflijck <rhyme label="a" type="m" corresp="#s7:l1">Heer</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Wie sou ons van dien <rhyme label="b" type="f" corresp="#s7:l3">voorseyden</rhyme></l>
        <l id="s7:l6" met="2" type="-+">Moghen <rhyme label="b" type="f" corresp="#s7:l3">scheyden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Laet ons toch hooren alle zijn <rhyme label="a" type="m">stem</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Want daer zijn woorden des leuens by <rhyme label="a" type="m" corresp="#s8:l1">hem</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Ioannes heuet <rhyme label="b" type="f">beschreuen</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Laet ons houden ons lichaem <rhyme label="a" type="m" corresp="#s8:l1">tem</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Dat wy hier na moghen <rhyme label="b" type="f" corresp="#s8:l3">leuen</rhyme></l>
        <l id="s8:l6" met="2" type="-+">En worden <rhyme label="b" type="f" corresp="#s8:l3">verheuen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Uerheuen hier na dats ons <rhyme label="a" type="m">begheert</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Wie hem hier verheft sal worden <rhyme label="a" type="m" corresp="#s9:l1">verneert</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Godt haet de hooueerdighe van <rhyme label="b" type="f">gheeste</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Die hem die minste hier <rhyme label="a" type="m" corresp="#s9:l1">oordineert</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Die sal in des hemels <rhyme label="b" type="f" corresp="#s9:l3">foreeste</rhyme></l>
        <l id="s9:l6" met="2" type="-+">Sijn die <rhyme label="b" type="f" corresp="#s9:l3">meeste</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Hierom en laet de <rhyme label="a" type="m">houerdy</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Gheensins hebben <rhyme label="a" type="m" corresp="#s10:l1">heerschappy</rhyme></l>
        <l id="s10:l3" met="3" type="-+">In uwe woorden oft <rhyme label="b" type="f">ghedachten</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Dit leerde Tobias sinen sone hoort <rhyme label="a" type="m" corresp="#s10:l1">my</rhyme></l>
        <l id="s10:l5" met="3" type="-+">Ghy moet hier oock wel op <rhyme label="b" type="f" corresp="#s10:l3">achten</rhyme></l>
        <l id="s10:l6" met="2" type="-+">Ghy <rhyme label="b" type="f" corresp="#s10:l3">gheslachten</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Ghy die Christenen zijt <rhyme label="a" type="m">ghenaempt</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Wandelt soo uwen roep <rhyme label="a" type="m" corresp="#s11:l1">betaempt</rhyme></l>
        <l id="s11:l3" met="3" type="-+">Als ons Paulus hout voor <rhyme label="b" type="f">ooghen</rhyme></l>
        <l id="s11:l4" met="4" type="-+">Alsmen totten Ephesien <rhyme label="a" type="m" corresp="#s11:l1">naempt</rhyme></l>
        <l id="s11:l5" met="3" type="-+">Wilt v na dijn <rhyme label="b" type="f" corresp="#s11:l3">vermoghen</rhyme></l>
        <l id="s11:l6" met="2" type="-+">Alsoo <rhyme label="b" type="f" corresp="#s11:l3">voeghen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Wy vinden totten Ephesien <rhyme label="a" type="m">daer</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Uan een ghemeynte alsoo <rhyme label="a" type="m" corresp="#s12:l1">claer</rhyme></l>
        <l id="s12:l3" met="3" type="-+">Ghepresen bouen <rhyme label="b" type="f">ghesteenten</rhyme></l>
        <l id="s12:l4" met="4" type="-+">Christus is het hooft van <rhyme label="a" type="m" corresp="#s12:l1">haer</rhyme></l>
        <l id="s12:l5" met="3" type="-+">Ulees been van sinen <rhyme label="b" type="f" corresp="#s12:l3">ghebeenten</rhyme></l>
        <l id="s12:l6" met="2" type="-+">Die <rhyme label="b" type="f" corresp="#s12:l3">ghemeenten</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">O God Prince der Princen <rhyme label="a" type="m">fijn</rhyme></l>
        <l id="s13:l2" met="4" type="-+">Wilt uwer ghemeynten beschermer <rhyme label="a" type="m" corresp="#s13:l1">zijn</rhyme></l>
        <l id="s13:l3" met="3" type="-+">Wilt daer die dief <rhyme label="b" type="f">wtkeeren</rhyme></l>
        <l id="s13:l4" met="4" type="-+">Wy staen opt leuende woort van <rhyme label="a" type="m" corresp="#s13:l1">dijn</rhyme></l>
        <l id="s13:l5" met="3" type="-+">Ghy weet dat wy niet en <rhyme label="b" type="f" corresp="#s13:l3">begheren</rhyme></l>
        <l id="s13:l6" met="2" type="-+">Ualsche <rhyme label="b" type="f" corresp="#s13:l3">leeren</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

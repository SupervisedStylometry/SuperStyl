  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Godt van hoogher <rhyme label="a" type="m">werd'</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Al sit ick hier op <rhyme label="a" type="m" corresp="#s1:l1">d'eerd'</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Nochtans mijn hert en is hier <rhyme label="b" type="m">niet</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Mijn herteken al met syn <rhyme label="c" type="m">oogh'</rhyme></l>
        <l id="s1:l5" met="2" type="-+">Dat siet om <rhyme label="c" type="m" corresp="#s1:l4">hoogh'</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Alleen naer u soo ghy wel <rhyme label="b" type="m" corresp="#s1:l3">siet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ick hebbet al <rhyme label="a" type="m">doorsocht</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Waer datmen soeken <rhyme label="a" type="m" corresp="#s2:l1">mocht</rhyme>;</l>
        <l id="s2:l3" met="4" type="-+">In hemel en op <rhyme label="b" type="m">aerderijck</rhyme>:</l>
        <l id="s2:l4" met="4" type="-+">Of daer wel waer een saeck so <rhyme label="c" type="m">puer</rhyme></l>
        <l id="s2:l5" met="2" type="-+">In de <rhyme label="c" type="m" corresp="#s2:l4">natuer</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Die u van weerde waer <rhyme label="b" type="m" corresp="#s2:l3">ghelijck</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Al wat hem hier <rhyme label="a" type="m">vertoont</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Het is wel fraey <rhyme label="a" type="m" corresp="#s3:l1">verschoont</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Het schint dat weerdich is <rhyme label="b" type="m">bemint</rhyme>:</l>
        <l id="s3:l4" met="4" type="-+">Maer noch en cant my niet <rhyme label="c" type="m">aenstaen</rhyme></l>
        <l id="s3:l5" met="2" type="-+">Noch niet <rhyme label="c" type="m" corresp="#s3:l4">versaen</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Alsmen u daer niet in <rhyme label="b" type="m" corresp="#s3:l3">vindt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Mijn hertsen is <rhyme label="a" type="m">oprecht</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Aen t'uwe vast <rhyme label="a" type="m" corresp="#s4:l1">ghehecht</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Ten wilt maer hebben u <rhyme label="b" type="m">alleen</rhyme>:</l>
        <l id="s4:l4" met="4" type="-+">T'ghen dat hem toont tot een <rhyme label="c" type="m">verkies</rhyme></l>
        <l id="s4:l5" met="2" type="-+">Het biet <rhyme label="c" type="m" corresp="#s4:l4">verlies</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Ghy zijt den eenen die ick <rhyme label="b" type="m" corresp="#s4:l3">meen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Met u soo heb ick't <rhyme label="a" type="m">al</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Dat is, en wesen <rhyme label="a" type="m" corresp="#s5:l1">sal</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">En dat gheweest is t'eender <rhyme label="b" type="m">tijdt</rhyme>:</l>
        <l id="s5:l4" met="4" type="-+">Hoe souder connen dan <rhyme label="c" type="m">gheschien</rhyme></l>
        <l id="s5:l5" met="2" type="-+">Dat ick sou <rhyme label="c" type="m" corresp="#s5:l4">sien</rhyme></l>
        <l id="s5:l6" met="4" type="-+">Naer dinghen die ghy niet en <rhyme label="b" type="m" corresp="#s5:l3">zijt</rhyme>?</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Lof aenghesien mijn <rhyme label="a" type="m">hert</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Soo sterck ghedreven <rhyme label="a" type="m" corresp="#s6:l1">werdt</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Tot u die zijt mijn hooghste <rhyme label="b" type="m">goet</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Sterckt my ghedurichlick hier <rhyme label="c" type="m">in</rhyme>,</l>
        <l id="s6:l5" met="2" type="-+">D'ack u <rhyme label="c" type="m" corresp="#s6:l4">bemin</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Alsoo ick u beminnen <rhyme label="b" type="m" corresp="#s6:l3">moet</rhyme>.</l>
      </lg>
    </lg>
  </text>

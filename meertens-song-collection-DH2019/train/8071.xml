    <melody>Gij die Christus hebt aangedaan</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Jan Jansz. Deutel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">GHy die Christum hebt <rhyme label="a" type="m">aenghedaen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Zijt ghy met hem op <rhyme label="a" type="m" corresp="#s1:l1">ghestaen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">En hebt dat <rhyme label="b" type="f">voorghenomen</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Niet weder in 't oude leven te <rhyme label="a" type="m" corresp="#s1:l1">gaen</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Soo laet ons worden als <rhyme label="b" type="f" corresp="#s1:l3">volkomen</rhyme>,</l>
        <l id="s1:l6" met="2" type="+-">Vruchtbaer <rhyme label="b" type="f" corresp="#s1:l3">Boomen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Een yegelijck boom, dit <rhyme label="a" type="m">overdenckt</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Die gheen goe vruchten voort en <rhyme label="a" type="m" corresp="#s2:l1">brenght</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Sal worden <rhyme label="b" type="f">afghehouwen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Neemt waer de gaven die Godt u <rhyme label="a" type="m" corresp="#s2:l1">schenckt</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">En wilt die oeffenen <rhyme label="b" type="f" corresp="#s2:l3">ghetrouwen</rhyme>,</l>
        <l id="s2:l6" met="2" type="+-">Sonder <rhyme label="b" type="f" corresp="#s2:l3">rouwen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Christus die spreeckt, hier wel op <rhyme label="a" type="m">siet</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Sonder my en vermeught ghy <rhyme label="a" type="m" corresp="#s3:l1">niet</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Laet ons sijn gaven <rhyme label="b" type="f">verwachten</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Op dat hy ons niet af en <rhyme label="a" type="m" corresp="#s3:l1">snijdt</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Als wy geen vruchten voort en <rhyme label="b" type="f" corresp="#s3:l3">brachten</rhyme>,</l>
        <l id="s3:l6" met="2" type="+-">Door sijn <rhyme label="b" type="f" corresp="#s3:l3">krachten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Als wy ons voor het quaedt <rhyme label="a" type="m">behoen</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Soo moeten wy tot 'tgoede <rhyme label="a" type="m" corresp="#s4:l1">spoen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Wy moghen niet ledigh <rhyme label="b" type="f">wesen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Daer staet die Godt vreest sal goedt <rhyme label="a" type="m" corresp="#s4:l1">doen</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Ecclesiasticus <rhyme label="b" type="f" corresp="#s4:l3">ghepresen</rhyme>,</l>
        <l id="s4:l6" met="2" type="+-">Tuyght van <rhyme label="b" type="f" corresp="#s4:l3">desen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Doet nu aen alle menschen <rhyme label="a" type="m">goedt</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Voor allen die geloovighe <rhyme label="a" type="m" corresp="#s5:l1">voedt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Spreeckt Paulus, wilt dit <rhyme label="b" type="f">vaten</rhyme>.</l>
        <l id="s5:l4" met="4" type="-+">Voort maeckt ons Christus Iesus <rhyme label="a" type="m" corresp="#s5:l1">vroedt</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Dat wy moeten komen te <rhyme label="b" type="f" corresp="#s5:l3">baten</rhyme>,</l>
        <l id="s5:l6" met="2" type="+-">Die ons <rhyme label="b" type="f" corresp="#s5:l3">haten</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Wie goedt kan doen t'eenighen <rhyme label="a" type="m">stont</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Doet hy dat niet dat is hem <rhyme label="a" type="m" corresp="#s6:l1">zondt</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Laet ons doch niet <rhyme label="b" type="f">vertraghen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Dat ons de Heere slapende <rhyme label="a" type="m" corresp="#s6:l1">vondt</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Wy souden seker seer veel <rhyme label="b" type="f" corresp="#s6:l3">slaghen</rhyme></l>
        <l id="s6:l6" met="2" type="+-">Moeten <rhyme label="b" type="f" corresp="#s6:l3">draghen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Hierom zijt neerstigh inde <rhyme label="a" type="m">weer</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Hebt altijdt ach op Christus <rhyme label="a" type="m" corresp="#s7:l1">leer</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Laet u daer af niet <rhyme label="b" type="f">leyden</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Den Vorst des levens een groot <rhyme label="a" type="m" corresp="#s7:l1">Heer</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Wie soude ons van dien <rhyme label="b" type="f" corresp="#s7:l3">voorseyden</rhyme>,</l>
        <l id="s7:l6" met="2" type="+-">Moghen <rhyme label="b" type="f" corresp="#s7:l3">scheyden</rhyme>?</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Laet ons doch hooren na sijn <rhyme label="a" type="m">stem</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">'tWoordt des levens dat is by <rhyme label="a" type="m" corresp="#s8:l1">hem</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Ioannes heeft het <rhyme label="b" type="f">gheschreven</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Laet ons houden ons lichaem <rhyme label="a" type="m" corresp="#s8:l1">tem</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Op dat wy daer na moghen <rhyme label="b" type="f" corresp="#s8:l3">leven</rhyme>,</l>
        <l id="s8:l6" met="2" type="+-">Sijn <rhyme label="b" type="f" corresp="#s8:l3">verheven</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Verheven hier naer, dat 's ons <rhyme label="a" type="m">begheert</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Wie hem hier verheft, wort <rhyme label="a" type="m" corresp="#s9:l1">verneert</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Godt haet hooveerdighe <rhyme label="b" type="f">gheesten</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Die hem de minste hier <rhyme label="a" type="m" corresp="#s9:l1">ordineert</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Die sal in des Hemels <rhyme label="b" type="f" corresp="#s9:l3">foreeste</rhyme>.</l>
        <l id="s9:l6" met="2" type="+-">Sijn de <rhyme label="b" type="f" corresp="#s9:l3">meeste</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Hierom en laet de <rhyme label="a" type="m">hovaerdy</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Gheensins hebben de <rhyme label="a" type="m" corresp="#s10:l1">heerschappy</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">In woorden of <rhyme label="b" type="f">gedachten</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Dit leerde Tobias sijn soon, hoort <rhyme label="a" type="m" corresp="#s10:l1">my</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Ghy moet hier oock seer wel op <rhyme label="b" type="f" corresp="#s10:l3">achten</rhyme>,</l>
        <l id="s10:l6" met="2" type="+-">Ghy <rhyme label="b" type="f" corresp="#s10:l3">geslachten</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Ghy die Christenen zijt <rhyme label="a" type="m">genaemt</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Wandelt soo uwen roep <rhyme label="a" type="m" corresp="#s11:l1">betaemt</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">'Twelck ons nae sijn <rhyme label="b" type="f">vermogen</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Paulus tot den Ephesien <rhyme label="a" type="m" corresp="#s11:l1">raemt</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Wilt u om de Schrift te <rhyme label="b" type="f" corresp="#s11:l3">vernoegen</rhyme></l>
        <l id="s11:l6" met="2" type="+-">Alsoo <rhyme label="b" type="f" corresp="#s11:l3">voegen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Noch vinden wy geschreven <rhyme label="a" type="m">daer</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Van een Gemeynte also <rhyme label="a" type="m" corresp="#s12:l1">klaer</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Ghepresen boven <rhyme label="b" type="f">gesteente</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Christus die is het Hooft van <rhyme label="a" type="m" corresp="#s12:l1">haer</rhyme>,</l>
        <l id="s12:l5" met="4" type="-+">Vleesch ende been van sijn <rhyme label="b" type="f" corresp="#s12:l3">gebeente</rhyme>,</l>
        <l id="s12:l6" met="2" type="+-">Die <rhyme label="b" type="f" corresp="#s12:l3">Ghemeente</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">O Godt Prince der Princen <rhyme label="a" type="m">fijn</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Wilt haer doch een beschermer <rhyme label="a" type="m" corresp="#s13:l1">zijn</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Wilt daer den dief <rhyme label="b" type="f">uytkeeren</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Wy staen op 'tlevende Woordt van <rhyme label="a" type="m" corresp="#s13:l1">dijn</rhyme>,</l>
        <l id="s13:l5" met="4" type="-+">Ghy weet dat wy niet en <rhyme label="b" type="f" corresp="#s13:l3">begheeren</rhyme></l>
        <l id="s13:l6" met="2" type="+-">Valsche <rhyme label="b" type="f" corresp="#s13:l3">leeren</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

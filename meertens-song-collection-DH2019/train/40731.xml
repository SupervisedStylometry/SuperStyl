  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="5" type="-+">NU iz de dey forronn' mey uwre' in <rhyme label="a" type="f">stuwne</rhyme>,</l>
        <l id="s1:l2" met="5" type="-+">Oermits de Sinn' dol-duwck't, ynn' wetters <rhyme label="a" type="f" corresp="#s1:l1">gruwne</rhyme>.</l>
        <l id="s1:l3" met="5" type="-+">Meyts' uwz nu sliep (fen God, om restjen, <rhyme label="a" type="f" corresp="#s1:l1">juwne</rhyme>)</l>
        <l id="s1:l4" met="2" type="-+">Deys lest <rhyme label="a" type="f" corresp="#s1:l1">onbuwne</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="5" type="-+">Komm', swiete sliep uwz eagen firddig <rhyme label="a" type="f">binne</rhyme>,</l>
        <l id="s2:l2" met="5" type="-+">Dat swierlijck Droagjen naet ontstjoerge' uwz <rhyme label="a" type="f" corresp="#s2:l1">sinne'</rhyme>,</l>
        <l id="s2:l3" met="5" type="-+">Dat sorgge' in aengste' uwz rest-njue naet <rhyme label="a" type="f" corresp="#s2:l1">oer-rinne</rhyme></l>
        <l id="s2:l4" met="2" type="-+">Nogg' free <rhyme label="a" type="f" corresp="#s2:l1">forwinne</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="5" type="-+">Komm' swiete sliep. Maer wezze' uwz feste <rhyme label="a" type="f">borge</rhyme>,</l>
        <l id="s3:l2" met="5" type="-+">Dat nin Nacht-grijmme' uwz fettet bye <rhyme label="a" type="f" corresp="#s3:l1">lorge</rhyme>,</l>
        <l id="s3:l3" met="5" type="-+">Dat wy naet reytsje'ijnn' Fijnne waese' in <rhyme label="a" type="f" corresp="#s3:l1">forge</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">Hadd' wachte' in <rhyme label="a" type="f" corresp="#s3:l1">forge</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="5" type="-+">Mar y, boppe al, Tjercke'-Haed, j√¥n Weytsers <rhyme label="a" type="f">seyne</rhyme>,</l>
        <l id="s4:l2" met="5" type="-+">Woll-sill'ige Ing'len, dats' all' on-rie <rhyme label="a" type="f" corresp="#s4:l1">weyne</rhyme>,</l>
        <l id="s4:l3" met="5" type="-+">Dat jon Schiep jo, fenne' Hol, naet wirdde' <rhyme label="a" type="f" corresp="#s4:l1">onteyne</rhyme></l>
        <l id="s4:l4" met="2" type="-+">Ontschaeke' oef <rhyme label="a" type="f" corresp="#s4:l1">scheyne</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="5" type="-+">Az den trogg' sliep forquicke (ljeave <rhyme label="a" type="f">HEERE</rhyme>)</l>
        <l id="s5:l2" met="5" type="-+">Wy firdig, moarn-yer t'uwz berop <rhyme label="a" type="f" corresp="#s5:l1">weer-keere</rhyme>,</l>
        <l id="s5:l3" met="5" type="-+">Holp' dat uwz dwaen in litten, to jon <rhyme label="a" type="f" corresp="#s5:l1">eere</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">Wol wirt <rhyme label="a" type="f" corresp="#s5:l1">rejeare</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

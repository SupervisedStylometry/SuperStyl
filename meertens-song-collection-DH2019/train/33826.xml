  <author>Jacob Rosant</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Gy sijt het Soudt der <rhyme label="a" type="f">Aerden</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Maer wanneer dat wordt <rhyme label="b" type="m">mal</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Soo is 't van geender <rhyme label="a" type="f" corresp="#s1:l1">weerden</rhyme>.</l>
        <l id="s1:l4" met="3" type="-+">Wie of dat souten <rhyme label="b" type="m" corresp="#s1:l2">sal</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ten kan dan niet meer <rhyme label="a" type="f">doogen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Ten dooght dan niet een <rhyme label="b" type="m">beet</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Men 't wel wegh werpen <rhyme label="a" type="f" corresp="#s2:l1">moogen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Men 't met de voet <rhyme label="b" type="m" corresp="#s2:l2">vertreet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Gy sijt des Weerelts <rhyme label="a" type="f">Lighte</rhyme>:</l>
        <l id="s3:l2" met="3" type="-+">Men  kan verborgen <rhyme label="b" type="m">niet</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Een Stadt uyt 's menschs <rhyme label="a" type="f" corresp="#s3:l1">gesighte</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Die m' op een Berge <rhyme label="b" type="m" corresp="#s3:l2">siet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Die een licht heeft <rhyme label="a" type="f">ontsteeke</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Set 't op een <rhyme label="b" type="m">Kandelaer</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Op dat het met goe' <rhyme label="a" type="f" corresp="#s4:l1">streke</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Het Huys verlichte <rhyme label="b" type="m" corresp="#s4:l2">klaer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">'t Is geen manier te <rhyme label="a" type="f">setten</rhyme></l>
        <l id="s5:l2" met="3" type="-+">'t Licht in een <rhyme label="b" type="m">Kooren-maet</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Laet menschen daer op <rhyme label="a" type="f" corresp="#s5:l1">letten</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">En sien het tot haer <rhyme label="b" type="m" corresp="#s5:l2">baet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Daerom soo laet vry <rhyme label="a" type="f">blijken</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Voor alle-man uw' <rhyme label="b" type="m">Licht</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">En laet de menschen <rhyme label="a" type="f" corresp="#s6:l1">kijken</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Vry aen met haer <rhyme label="b" type="m" corresp="#s6:l2">gesicht</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Dat aen de goede <rhyme label="a" type="f">werken</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Die gy-lie haer <rhyme label="b" type="m">vertoont</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Sy Goodts Lof mogen <rhyme label="a" type="f" corresp="#s7:l1">merken</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Die in den Heemel <rhyme label="b" type="m" corresp="#s7:l2">woont</rhyme>.</l>
      </lg>
    </lg>
  </text>

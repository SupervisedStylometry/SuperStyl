  <author>Cornelis de Leeuw</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">WErt ghy o! Christen-mensch <rhyme label="a" type="m">versocht</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Van vleesch, van Weerelt en 't <rhyme label="a" type="m" corresp="#s1:l1">ghedrocht</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Der Hellen wilt voor haer niet <rhyme label="b" type="f">vlieden</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Maer haer het hooft kloeckmoedigh <rhyme label="b" type="f" corresp="#s1:l3">bieden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Steunt in die strijt niet op u <rhyme label="a" type="m">kracht</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Verlaet u niet op menschen <rhyme label="a" type="m" corresp="#s2:l1">macht</rhyme>.</l>
        <l id="s2:l3" met="4" type="-+">Versoeckt Gods bystant in u <rhyme label="b" type="f">lijden</rhyme>;</l>
        <l id="s2:l4" met="4" type="-+">Bid, dat hy u wil helpen <rhyme label="b" type="f" corresp="#s2:l3">strijden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Eyscht met ootmoedigheyt Gods <rhyme label="a" type="m">Gheest</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Op dat ghy niet mooght zijn <rhyme label="a" type="m" corresp="#s3:l1">bevreest</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Voor u vyanden, die u <rhyme label="b" type="f">quellen</rhyme></l>
        <l id="s3:l4" met="4" type="-+">En gantschlijck soecken ne'er te <rhyme label="b" type="f" corresp="#s3:l3">vellen</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Vliet allerley <rhyme label="a" type="m">gheleghentheyt</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Waer doormen krijght <rhyme label="a" type="m" corresp="#s4:l1">gheneghentheydt</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Tot sonden; wilt al 't gheen <rhyme label="b" type="f">vermijden</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Waer door u hert in 't quaet sou <rhyme label="b" type="f" corresp="#s4:l3">glijden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Wie peck hanteert, wert licht <rhyme label="a" type="m">besmet</rhyme>.</l>
        <l id="s5:l2" met="4" type="-+">Het quaet gheschelschap is een <rhyme label="a" type="m" corresp="#s5:l1">net</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Waer door des menschen hert in <rhyme label="b" type="f">sonden</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Ghevanghen wert, verstrickt, <rhyme label="b" type="f" corresp="#s5:l3">ghebonden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Daer toe, acht gheen bekooringh <rhyme label="a" type="m">kleyn</rhyme>.</l>
        <l id="s6:l2" met="4" type="-+">Hout u van alle sonden <rhyme label="a" type="m" corresp="#s6:l1">reyn</rhyme>.</l>
        <l id="s6:l3" met="4" type="-+">Versoeckinghen, hoe kleyn, <rhyme label="b" type="f">verraden</rhyme>:</l>
        <l id="s6:l4" met="4" type="-+">Soo ghy niet gaet met Godt te <rhyme label="b" type="f" corresp="#s6:l3">raden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">'t Is seecker, dat gheen vyant <rhyme label="a" type="m">meer</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Verwonnen heeft, dan diemen <rhyme label="a" type="m" corresp="#s7:l1">seer</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Verachte; diemen gaet <rhyme label="b" type="f">verachten</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Voor dien sult ghy u weynigh <rhyme label="b" type="f" corresp="#s7:l3">wachten</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Al wat u hert tot sonden <rhyme label="a" type="m">raet</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Haet dat met een vasten <rhyme label="a" type="m" corresp="#s8:l1">haet</rhyme>.</l>
        <l id="s8:l3" met="4" type="-+">En of het u schoon komt voor <rhyme label="b" type="f">ooghen</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">V ziel daer van hout <rhyme label="b" type="f" corresp="#s8:l3">afghetooghen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Want die gantsch snoo vyanden <rhyme label="a" type="m">zijn</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Wiens tongh en wesen goeden <rhyme label="a" type="m" corresp="#s9:l1">schijn</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Van buyten thoont, doch binnen <rhyme label="b" type="f">dencken</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Hoe dat sy best u sullen <rhyme label="b" type="f" corresp="#s9:l3">krencken</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Valt u in 't hert een quae <rhyme label="a" type="m">ghedacht</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Terstont die van u weert met <rhyme label="a" type="m" corresp="#s10:l1">kracht</rhyme>.</l>
        <l id="s10:l3" met="4" type="-+">Daer op te willen legghen <rhyme label="b" type="f">malen</rhyme>:</l>
        <l id="s10:l4" met="4" type="-+">Gheeft quae bewegingh, die doet <rhyme label="b" type="f" corresp="#s10:l3">falen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Wie quae ghedachten voet in't <rhyme label="a" type="m">hert</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Seer licht tot quaet ghetrocken <rhyme label="a" type="m" corresp="#s11:l1">wert</rhyme>;</l>
        <l id="s11:l3" met="4" type="-+">Wilt dan uytroeyen 't zaet der <rhyme label="b" type="f">sonden</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Op dat ghy Heyligh wert <rhyme label="b" type="f" corresp="#s11:l3">bevonden</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Roey desen uyt door reyn <rhyme label="a" type="m">ghebet</rhyme>:</l>
        <l id="s12:l2" met="4" type="-+">Plant in u hert des Heeren <rhyme label="a" type="m" corresp="#s12:l1">Wet</rhyme>.</l>
        <l id="s12:l3" met="4" type="-+">'t Is schad'lijck in sijn hert te <rhyme label="b" type="f">draghen</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Dat ons in lijff en ziel kan <rhyme label="b" type="f" corresp="#s12:l3">plaghen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Omgort u met Gods <rhyme label="a" type="m">wapeningh</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Met 's Heeren woort; voor alle <rhyme label="a" type="m" corresp="#s13:l1">dingh</rhyme></l>
        <l id="s13:l3" met="4" type="-+">Vergheet den schilt niet van 't <rhyme label="b" type="f">ghelooven</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Waer door ghy alles komt te <rhyme label="b" type="f" corresp="#s13:l3">boven</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Met waerheyt en <rhyme label="a" type="m">rechtvaerdigheyt</rhyme></l>
        <l id="s14:l2" met="4" type="-+">Bekleet u, en met <rhyme label="a" type="m" corresp="#s14:l1">vaerdigheyt</rhyme></l>
        <l id="s14:l3" met="4" type="-+">Van 't Evangelium der <rhyme label="b" type="f">vrede</rhyme></l>
        <l id="s14:l4" met="4" type="-+">Heyls-hoop daer by voegh en <rhyme label="b" type="f" corresp="#s14:l3">ghebeden</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Dus aenghedaen met Gods <rhyme label="a" type="m">gheweer</rhyme></l>
        <l id="s15:l2" met="4" type="-+">Kloeckmoedigh gaet u vleysch te <rhyme label="a" type="m" corresp="#s15:l1">keer</rhyme></l>
        <l id="s15:l3" met="4" type="-+">Den Satan, weerelt moeten <rhyme label="b" type="f">duycken</rhyme>,</l>
        <l id="s15:l4" met="4" type="-+">Soo ghy u schilt recht wilt <rhyme label="b" type="f" corresp="#s15:l3">ghebruycken</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Wert ghy bekoort, gheeft gheen <rhyme label="a" type="m">ghehoor</rhyme></l>
        <l id="s16:l2" met="4" type="-+">Of schoon yet kleyns u komt te <rhyme label="a" type="m" corresp="#s16:l1">voor</rhyme>:</l>
        <l id="s16:l3" met="4" type="-+">Het kleyn kan metter tijt <rhyme label="b" type="f">vermeeren</rhyme>.</l>
        <l id="s16:l4" met="4" type="-+">En u van 't rechte padt <rhyme label="b" type="f" corresp="#s16:l3">afkeeren</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Wil ymant dat het vuyr niet <rhyme label="a" type="m">brant</rhyme></l>
        <l id="s17:l2" met="4" type="-+">Die smoort of doet het aen een <rhyme label="a" type="m" corresp="#s17:l1">kant</rhyme>.</l>
        <l id="s17:l3" met="4" type="-+">Dooft selfs de allerminste <rhyme label="b" type="f">voncken</rhyme>:</l>
        <l id="s17:l4" met="4" type="-+">Dat kleyn is, kan tot groot <rhyme label="b" type="f" corresp="#s17:l3">ontvoncken</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Hy wijss'lijck doet, die sijn <rhyme label="a" type="m">vyant</rhyme></l>
        <l id="s18:l2" met="4" type="-+">Gantsch buyten sluyt; want hant aen <rhyme label="a" type="m" corresp="#s18:l1">hant</rhyme></l>
        <l id="s18:l3" met="4" type="-+">Te willen strijden, gheeft <rhyme label="b" type="f">vyanden</rhyme>.</l>
        <l id="s18:l4" met="4" type="-+">Goe kans om bet u <rhyme label="b" type="f" corresp="#s18:l3">aenteranden</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">De sonden zijn als schaeckels <rhyme label="a" type="m">vast</rhyme>:</l>
        <l id="s19:l2" met="4" type="-+">Die op de minste niet en <rhyme label="a" type="m" corresp="#s19:l1">past</rhyme>,</l>
        <l id="s19:l3" met="4" type="-+">Sal onghevoelijck dieper <rhyme label="b" type="f">glijden</rhyme>;</l>
        <l id="s19:l4" met="4" type="-+">Die wijs is, groot en kleyn sal <rhyme label="b" type="f" corresp="#s19:l3">mijden</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">Let hoe de Soone Gods wel <rhyme label="a" type="m">eer</rhyme></l>
        <l id="s20:l2" met="4" type="-+">Den loosen Satan gingh te <rhyme label="a" type="m" corresp="#s20:l1">keer</rhyme>:</l>
        <l id="s20:l3" met="4" type="-+">Soo hy doe streedt, wilt mede <rhyme label="b" type="f">strijden</rhyme>;</l>
        <l id="s20:l4" met="4" type="-+">Stelt 's Heeren doen niet aen een <rhyme label="b" type="f" corresp="#s20:l3">sijden</rhyme>.</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="4" type="-+">Wert nimmermeer in 't strijden <rhyme label="a" type="m">traegh</rhyme>:</l>
        <l id="s21:l2" met="4" type="-+">Houdt goede schilt - wacht alle <rhyme label="a" type="m" corresp="#s21:l1">daegh</rhyme>.</l>
        <l id="s21:l3" met="4" type="-+">Laet ghy het quaet in 't herte <rhyme label="b" type="f">binnen</rhyme>,</l>
        <l id="s21:l4" met="4" type="-+">Ghy gantsch verbijstert zijt van <rhyme label="b" type="f" corresp="#s21:l3">sinnen</rhyme>.</l>
      </lg>
      <lg id="s22" type="stanza">
        <l id="s22:l1" met="4" type="-+">Wert ghy verwonnen door de <rhyme label="a" type="m">list</rhyme></l>
        <l id="s22:l2" met="4" type="-+">Des Satans, ghy het leven <rhyme label="a" type="m" corresp="#s22:l1">mist</rhyme></l>
        <l id="s22:l3" met="4" type="-+">Dat Godt belooft heeft die te <rhyme label="b" type="f">gheven</rhyme></l>
        <l id="s22:l4" met="4" type="-+">Die hem ghetrouwt in 't strijden <rhyme label="b" type="f" corresp="#s22:l3">bleven</rhyme>.</l>
      </lg>
      <lg id="s23" type="stanza">
        <l id="s23:l1" met="4" type="-+">Wint ghy de Weerelt, <rhyme label="a" type="m">Christenhelt</rhyme></l>
        <l id="s23:l2" met="4" type="-+">Sijn vleesch en Satan <rhyme label="a" type="m" corresp="#s23:l1">ne'erghevelt</rhyme></l>
        <l id="s23:l3" met="4" type="-+">Door u kloeckmoedigheyt in 't <rhyme label="b" type="f">strijden</rhyme>:</l>
        <l id="s23:l4" met="4" type="-+">Volhart; ghy sult met Godt <rhyme label="b" type="f" corresp="#s23:l3">verblijden</rhyme>.</l>
      </lg>
      <lg id="s24" type="stanza">
        <l id="s24:l1" met="4" type="-+">Heyls-kroon op ware <rhyme label="a" type="m">lijdtsaemheyt</rhyme></l>
        <l id="s24:l2" met="4" type="-+">Stantvaste zielen <rhyme label="a" type="m" corresp="#s24:l1">toe-gheseyt</rhyme></l>
        <l id="s24:l3" met="4" type="-+">Die trouwen Godt u sal <rhyme label="b" type="f">ver-eeren</rhyme>,</l>
        <l id="s24:l4" met="4" type="-+">Met blinckend' overwinninghs <rhyme label="b" type="f" corresp="#s24:l3">kleeren</rhyme>.</l>
      </lg>
      <lg id="s25" type="stanza">
        <l id="s25:l1" met="4" type="-+">In dien bekooringh 't hert valt <rhyme label="a" type="m">bangh</rhyme>.</l>
        <l id="s25:l2" met="4" type="-+">Denck, vroome ziel, ten duert niet <rhyme label="a" type="m" corresp="#s25:l1">langh</rhyme></l>
        <l id="s25:l3" met="4" type="-+">Nochtans verwin ick door 't <rhyme label="b" type="f">ghelooven</rhyme></l>
        <l id="s25:l4" met="4" type="-+">Ick blijf van 't eeuwigh niet <rhyme label="b" type="f" corresp="#s25:l3">verschoven</rhyme>.</l>
      </lg>
      <lg id="s26" type="stanza">
        <l id="s26:l1" met="4" type="-+">De'es vaste hoop van 't eeuwigh <rhyme label="a" type="m">goet</rhyme></l>
        <l id="s26:l2" met="4" type="-+">Doet strijden met een kloeck <rhyme label="a" type="m" corresp="#s26:l1">ghemoet</rhyme>,</l>
        <l id="s26:l3" met="4" type="-+">En vleysch en weerlt en Satan <rhyme label="b" type="f">winnen</rhyme>;</l>
        <l id="s26:l4" met="4" type="-+">En onsen Godt alleen <rhyme label="b" type="f" corresp="#s26:l3">beminnen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <author>François Halma</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">'k BEtrouwe op u, Heer, met myn <rhyme label="a" type="f">harte</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Dat my in <rhyme label="b" type="m">eeuwigheit</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Geen schaamte zy <rhyme label="b" type="m" corresp="#s1:l2">bereidt</rhyme>;</l>
        <l id="s1:l4" met="4" type="-+">Maar redtme uit alle leet en <rhyme label="a" type="f" corresp="#s1:l1">smarte</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Door uw <rhyme label="c" type="f">gerechtigheden</rhyme>:</l>
        <l id="s1:l6" met="3" type="-+">Bevry my, naar myn <rhyme label="c" type="f" corresp="#s1:l5">beeden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Neig, Heer, uwe ooren tot myn <rhyme label="a" type="f">klagten</rhyme>.</l>
        <l id="s2:l2" met="3" type="-+">Slaak my van 's vyandts <rhyme label="b" type="m">trots</rhyme>.</l>
        <l id="s2:l3" met="3" type="-+">Wees my een vaste <rhyme label="b" type="m" corresp="#s2:l2">rotz</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Waarin ik altoos kan <rhyme label="a" type="f" corresp="#s2:l1">vernachten</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Gy hebt bevel <rhyme label="c" type="f">gegeeven</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Tot redding van myn <rhyme label="c" type="f" corresp="#s2:l5">leven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Want gy zy myne rotze en <rhyme label="a" type="f">sterkte</rhyme>.</l>
        <l id="s3:l2" met="3" type="-+">Myn Godt, bevry myn' <rhyme label="b" type="m">stant</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Van des godtloozen <rhyme label="b" type="m" corresp="#s3:l2">handt</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Van dien, die steedts verkeerdheit <rhyme label="a" type="f" corresp="#s3:l1">werkte</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Heel wrevelig in <rhyme label="c" type="f">handel</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En trots in zynen <rhyme label="c" type="f" corresp="#s3:l5">wandel</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Want gy zyt, Heer, al myn <rhyme label="a" type="f">betrouwen</rhyme>.</l>
        <l id="s4:l2" met="3" type="-+">'k Steunde op u van der <rhyme label="b" type="m">jeugt</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Als Godt van heil en <rhyme label="b" type="m" corresp="#s4:l2">vreugdt</rhyme>;</l>
        <l id="s4:l4" met="4" type="-+">Van dat ik mogt het licht <rhyme label="a" type="f" corresp="#s4:l1">beschouwen</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">Van 's moeders <rhyme label="c" type="f">ingewanden</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Trokt gy my uit de <rhyme label="c" type="f" corresp="#s4:l5">banden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ik ben by veelen als een <rhyme label="a" type="f">wonder</rhyme>;</l>
        <l id="s5:l2" met="3" type="-+">Maar gy zyt myne <rhyme label="b" type="m">kracht</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Myn toevlucht, hoede en <rhyme label="b" type="m" corresp="#s5:l2">wacht</rhyme>.</l>
        <l id="s5:l4" met="4" type="-+">Vervul myn' mondt, Heer, in 't <rhyme label="a" type="f" corresp="#s5:l1">byzonder</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Met uwen lof en <rhyme label="c" type="f">eere</rhyme>;</l>
        <l id="s5:l6" met="3" type="-+">Dat hy die steedts <rhyme label="c" type="f" corresp="#s5:l5">vermeêre</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Laat my uw heerlykheit <rhyme label="a" type="f">verbreiden</rhyme>.</l>
        <l id="s6:l2" met="3" type="-+">Verwerp my niet ten <rhyme label="b" type="m">tyt</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Dat ik door zwakheit <rhyme label="b" type="m" corresp="#s6:l2">slyt</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Laat, Heer, uw gunst nooit van my <rhyme label="a" type="f" corresp="#s6:l1">scheiden</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Terwyl, door hooge <rhyme label="c" type="f">jaaren</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Myn krachten heene <rhyme label="c" type="f" corresp="#s6:l5">vaaren</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Want 'k hoore myne haters <rhyme label="a" type="f">spreeken</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Van my, en mynen <rhyme label="b" type="m">staat</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Zy houden t'zamen <rhyme label="b" type="m" corresp="#s7:l2">raat</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Om listig zich op my te <rhyme label="a" type="f" corresp="#s7:l1">wreeken</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">Men loert op myne <rhyme label="c" type="f">ziele</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Opdatmen haar <rhyme label="c" type="f" corresp="#s7:l5">verniele</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Zy zeggen, Godt heeft hem <rhyme label="a" type="f">verlaaten</rhyme>;</l>
        <l id="s8:l2" met="3" type="-+">Jaagt hem dan na op 't <rhyme label="b" type="m">landt</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">En grypt hem niet de <rhyme label="b" type="m" corresp="#s8:l2">handt</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Want geen verlosser zal hem <rhyme label="a" type="f" corresp="#s8:l1">baaten</rhyme>.</l>
        <l id="s8:l5" met="3" type="-+">Uw hulpe, ô Godt, <rhyme label="c" type="f">verschyne</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Opdat myn leet <rhyme label="c" type="f" corresp="#s8:l5">verdwyne</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Laat hen dan schande en schaamte <rhyme label="a" type="f">treffen</rhyme>;</l>
        <l id="s9:l2" met="3" type="-+">Verteerze die myn <rhyme label="b" type="m">quaat</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Bevorderen door <rhyme label="b" type="m" corresp="#s9:l2">haat</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">En zich stoutmoediglyk <rhyme label="a" type="f" corresp="#s9:l1">verheffen</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Om tweespalt te <rhyme label="c" type="f">verwekken</rhyme>:</l>
        <l id="s9:l6" met="3" type="-+">Laat smaadt hen <rhyme label="c" type="f" corresp="#s9:l5">overdekken</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Doch ik zal, Heer, gedurig <rhyme label="a" type="f">hoopen</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Opdat ik uwen <rhyme label="b" type="m">lof</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Verhooge aan 't <rhyme label="b" type="m" corresp="#s10:l2">starrenhof</rhyme>.</l>
        <l id="s10:l4" met="4" type="-+">Myn mondt, ontsloten, blyft steedts <rhyme label="a" type="f" corresp="#s10:l1">open</rhyme></l>
        <l id="s10:l5" met="3" type="-+">Om van uw recht te <rhyme label="c" type="f">spreeken</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">En 't heil aan my <rhyme label="c" type="f" corresp="#s10:l5">gebleken</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Ik zal 't den ganschen dag <rhyme label="a" type="f">vertellen</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Schoon ik 't getal niet <rhyme label="b" type="m">weet</rhyme>.</l>
        <l id="s11:l3" met="3" type="-+">'k Zal heene gaan, <rhyme label="b" type="m" corresp="#s11:l2">gereedt</rhyme></l>
        <l id="s11:l4" met="4" type="-+">In 's Heeren mogentheit, en <rhyme label="a" type="f" corresp="#s11:l1">spellen</rhyme></l>
        <l id="s11:l5" met="3" type="-+">Alle uw <rhyme label="c" type="f">gerechtigheden</rhyme></l>
        <l id="s11:l6" met="3" type="-+">Den volke in alle <rhyme label="c" type="f" corresp="#s11:l5">steden</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">O Godt, qy quaamt my <rhyme label="a" type="f">onderwyzen</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Zelf in myne eerste <rhyme label="b" type="m">jeugt</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">En leerde my de <rhyme label="b" type="m" corresp="#s12:l2">deugt</rhyme>:</l>
        <l id="s12:l4" met="4" type="-+">En noch mag ik uw goedheit <rhyme label="a" type="f" corresp="#s12:l1">pryzen</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">En melden uwe <rhyme label="c" type="f">wondren</rhyme>;</l>
        <l id="s12:l6" met="3" type="-+">Die door de wereldt <rhyme label="c" type="f" corresp="#s12:l5">dondren</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Wil daarom my ook niet <rhyme label="a" type="f">begeeven</rhyme></l>
        <l id="s13:l2" met="3" type="-+">In gryzen <rhyme label="b" type="m">ouderdom</rhyme>;</l>
        <l id="s13:l3" met="3" type="-+">Totdat myn mondt <rhyme label="b" type="m" corresp="#s13:l2">uitbrom'</rhyme></l>
        <l id="s13:l4" met="4" type="-+">De magt van uwen arm den <rhyme label="a" type="f" corresp="#s13:l1">neeven</rhyme>,</l>
        <l id="s13:l5" met="3" type="-+">Van dit en 't <rhyme label="c" type="f">nageslachte</rhyme>,</l>
        <l id="s13:l6" met="3" type="-+">Ver boven men ooit <rhyme label="c" type="f" corresp="#s13:l5">dachte</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Ook is uw recht zeer hoog <rhyme label="a" type="f">verheven</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">En uw <rhyme label="b" type="m">gerechtigheit</rhyme></l>
        <l id="s14:l3" met="3" type="-+">Tot 's hemels boog <rhyme label="b" type="m" corresp="#s14:l2">verspreidt</rhyme>;</l>
        <l id="s14:l4" met="4" type="-+">O Godt, die wondren hebt <rhyme label="a" type="f" corresp="#s14:l1">bedreven</rhyme>;</l>
        <l id="s14:l5" met="3" type="-+">Wie is gelyk gy <rhyme label="c" type="f">t'achten</rhyme></l>
        <l id="s14:l6" met="3" type="-+">In groot bedryf en <rhyme label="c" type="f" corresp="#s14:l5">krachten</rhyme> ?</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Gy die my niet veel angst en <rhyme label="a" type="f">quaalen</rhyme></l>
        <l id="s15:l2" met="3" type="-+">Bezogt hebt, zult my <rhyme label="b" type="m">weêr</rhyme></l>
        <l id="s15:l3" met="3" type="-+">Verlevendigen, <rhyme label="b" type="m" corresp="#s15:l2">Heer</rhyme>,</l>
        <l id="s15:l4" met="4" type="-+">En my uit 's aardryks afgrondt <rhyme label="a" type="f" corresp="#s15:l1">haalen</rhyme>,</l>
        <l id="s15:l5" met="3" type="-+">Om myne ziel te <rhyme label="c" type="f">troosten</rhyme></l>
        <l id="s15:l6" met="3" type="-+">Door 't heillicht uit het <rhyme label="c" type="f" corresp="#s15:l5">Oosten</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Gy zult myn grootheit ook <rhyme label="a" type="f">vermeêren</rhyme>.</l>
        <l id="s16:l2" met="3" type="-+">Dan zal ik op de <rhyme label="b" type="m">luit</rhyme>,</l>
        <l id="s16:l3" met="3" type="-+">Met harpgezang en <rhyme label="b" type="m" corresp="#s16:l2">fluit</rhyme>,</l>
        <l id="s16:l4" met="4" type="-+">Uw trouwe roemen en u <rhyme label="a" type="f" corresp="#s16:l1">eeren</rhyme>.</l>
        <l id="s16:l5" met="3" type="-+">Ik zal u Psalmen <rhyme label="c" type="f">zingen</rhyme></l>
        <l id="s16:l6" met="3" type="-+">Die door de wolken <rhyme label="c" type="f" corresp="#s16:l5">dringen</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">O Heilige Israëls, myn <rhyme label="a" type="f">lippen</rhyme></l>
        <l id="s17:l2" met="3" type="-+">Zal ik tot <rhyme label="b" type="m">feestgezang</rhyme></l>
        <l id="s17:l3" met="3" type="-+">Besteên myn leven <rhyme label="b" type="m" corresp="#s17:l2">lang</rhyme>:</l>
        <l id="s17:l4" met="4" type="-+">Het heilgejuich zweeve op haar <rhyme label="a" type="f" corresp="#s17:l1">tippen</rhyme>.</l>
        <l id="s17:l5" met="3" type="-+">Myn ziele zal u <rhyme label="c" type="f">pryzen</rhyme>,</l>
        <l id="s17:l6" met="3" type="-+">En altoos eer <rhyme label="c" type="f" corresp="#s17:l5">bewyzen</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Want gy hebt haar verlost uit <rhyme label="a" type="f">banden</rhyme>;</l>
        <l id="s18:l2" met="3" type="-+">Dat uw <rhyme label="b" type="m">gerechtigheit</rhyme></l>
        <l id="s18:l3" met="3" type="-+">Den ganschen dag <rhyme label="b" type="m" corresp="#s18:l2">verbreidt</rhyme></l>
        <l id="s18:l4" met="4" type="-+">Word' door myn tong. want schaamte en <rhyme label="a" type="f" corresp="#s18:l1">schanden</rhyme></l>
        <l id="s18:l5" met="3" type="-+">Zyn 't loon van die my <rhyme label="c" type="f">zoeken</rhyme></l>
        <l id="s18:l6" met="3" type="-+">Door boosheit te <rhyme label="c" type="f" corresp="#s18:l5">verkloeken</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <author>Philips van Marnix van Sint Aldegonde</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DIe hun vertrouwen op God <rhyme label="a" type="f">stellen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Die sullen t'eeuwger <rhyme label="b" type="m">stont</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Staen op seer vasten <rhyme label="b" type="m" corresp="#s1:l2">gront</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Als Sions berg, die sonder <rhyme label="a" type="f" corresp="#s1:l1">hellen</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Staet onbeweegt end kan niet <rhyme label="c" type="f">swijken</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">Noch nergens <rhyme label="c" type="f" corresp="#s1:l5">wijcken</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Gelijck Ierusalem int <rhyme label="a" type="f">ronde</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Met bergen is <rhyme label="b" type="m">bewalt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">End nimmermeer <rhyme label="b" type="m" corresp="#s2:l2">vervalt</rhyme>:</l>
        <l id="s2:l4" met="4" type="-+">So is God nu, end t'allen <rhyme label="a" type="f" corresp="#s2:l1">stonde</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Rontom sijn volck, end salt <rhyme label="c" type="f">beschermen</rhyme></l>
        <l id="s2:l6" met="2" type="-+">In sijnen <rhyme label="c" type="f" corresp="#s2:l5">ermen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Want op der vromen lot end <rhyme label="a" type="f">erve</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">En sal tboos volck seer <rhyme label="b" type="m">straf</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Niet rusten sijnen <rhyme label="b" type="m" corresp="#s3:l2">staf</rhyme>.</l>
        <l id="s3:l4" met="4" type="-+">Op dat sick tvroim volck niet en <rhyme label="a" type="f" corresp="#s3:l1">derve</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Wt onverduldicheyt, <rhyme label="c" type="f">begeven</rhyme></l>
        <l id="s3:l6" met="2" type="-+">Tot een boos <rhyme label="c" type="f" corresp="#s3:l5">leven</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">O Heer, doe wel den vromen <rhyme label="a" type="f">herten</rhyme>:</l>
        <l id="s4:l2" met="3" type="-+">Maer vell' de boosen <rhyme label="b" type="m">om</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Die soecken wegen <rhyme label="b" type="m" corresp="#s4:l2">crom</rhyme>:</l>
        <l id="s4:l4" met="4" type="-+">Met al die staen na boose <rhyme label="a" type="f" corresp="#s4:l1">perten</rhyme>.</l>
        <l id="s4:l5" met="4" type="-+">Laet Israel doch spoedich <rhyme label="c" type="f">treden</rhyme>,</l>
        <l id="s4:l6" met="2" type="-+">In rust end <rhyme label="c" type="f" corresp="#s4:l5">vreden</rhyme>.</l>
      </lg>
    </lg>
  </text>

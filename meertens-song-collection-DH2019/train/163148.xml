  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Vryers die, als ys <rhyme label="a" type="m">verkoud</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">U van Liefde steeds <rhyme label="a" type="m" corresp="#s1:l1">onthoud</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Even als of het soete <rhyme label="b" type="f">paren</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Door natuur ons self <rhyme label="c" type="m">geleerd</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Slegts door smerten en <rhyme label="b" type="f" corresp="#s1:l3">beswaren</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">'s Menschen jeugt en vreugt <rhyme label="c" type="m" corresp="#s1:l4">verteert</rhyme>:</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Laat vry van die mening <rhyme label="a" type="m">af</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Als of 't huuw'lijk tot een <rhyme label="a" type="m" corresp="#s2:l1">straf</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Voor het menschdom was <rhyme label="b" type="f">geboren</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Nademaal   haar <rhyme label="c" type="m">soetigheid</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Al wat ademd kan <rhyme label="b" type="f" corresp="#s2:l3">bekoren</rhyme></l>
        <l id="s2:l6" met="4" type="+-">En vol vreugd de sinnen <rhyme label="c" type="m" corresp="#s2:l4">vleid</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Wat baat u een Konings <rhyme label="a" type="m">kroon</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Septer, staf en trotse <rhyme label="a" type="m" corresp="#s3:l1">throon</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Hoe sal uw haar    glants <rhyme label="b" type="f">behagen</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Soo gy altoos eensaam <rhyme label="c" type="m">moet</rhyme></l>
        <l id="s3:l5" met="4" type="+-">Slyten uwe levens <rhyme label="b" type="f" corresp="#s3:l3">dagen</rhyme>:</l>
        <l id="s3:l6" met="4" type="+-">Eensaamheid is <rhyme label="c" type="m" corresp="#s3:l4">arremoed</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Wat voor vreugde heeft een <rhyme label="a" type="m">vrek</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Die aan alles heeft <rhyme label="a" type="m" corresp="#s4:l1">gebrek</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Soo hy midden in sijn <rhyme label="b" type="f">schyven</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Daar hy als een mol in <rhyme label="c" type="m">wroed</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Nagt en dag alleen moet <rhyme label="b" type="f" corresp="#s4:l3">blyven</rhyme>:</l>
        <l id="s4:l6" met="4" type="+-">Eensaamheid is <rhyme label="c" type="m" corresp="#s4:l4">Arremoed</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Wat vermaak geniet een <rhyme label="a" type="m">held</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Die sijn vyand heeft <rhyme label="a" type="m" corresp="#s5:l1">geveld</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Schoon hy yder een doet <rhyme label="b" type="f">beven</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Als hy, steeds beklad van <rhyme label="c" type="m">bloed</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Moet op 't veld alleenig <rhyme label="b" type="f" corresp="#s5:l3">leven</rhyme>:</l>
        <l id="s5:l6" met="4" type="+-">Eensaamheyd is <rhyme label="c" type="m" corresp="#s5:l4">Arremoed</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Ja, selfs midden in 't <rhyme label="a" type="m">geluk</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Syt gy eensaam, vol van <rhyme label="a" type="m" corresp="#s6:l1">druk</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Kund gy niemand <rhyme label="b" type="f">mededelen</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Uw vermogen, staat of <rhyme label="c" type="m">goed</rhyme>.</l>
        <l id="s6:l5" met="4" type="+-">Nimmer sal de rust u <rhyme label="b" type="f" corresp="#s6:l3">strelen</rhyme>:</l>
        <l id="s6:l6" met="4" type="+-">Eensaamheyd is <rhyme label="c" type="m" corresp="#s6:l4">Arremoed</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Ongelukkig sult gy <rhyme label="a" type="m">sijn</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Troosteloos in uwe <rhyme label="a" type="m" corresp="#s7:l1">pijn</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Kan u niemand helpen <rhyme label="b" type="f">dragen</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Uwe ramp en <rhyme label="c" type="m">tegenspoed</rhyme>;</l>
        <l id="s7:l5" met="4" type="+-">Steeds sal uwe tonge <rhyme label="b" type="f" corresp="#s7:l3">klagen</rhyme>:</l>
        <l id="s7:l6" met="4" type="+-">Eensaamheyd is <rhyme label="c" type="m" corresp="#s7:l4">Arremoed</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Van den grootsten <rhyme label="a" type="m">amptenaar</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Tot den minsten <rhyme label="a" type="m" corresp="#s8:l1">bedelaer</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Sult gy dese reden <rhyme label="b" type="f">horen</rhyme>:</l>
        <l id="s8:l4" met="4" type="+-">'t Sy in voor of <rhyme label="c" type="m">tegenspoed</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">'t Huwelijk is tot vreugd <rhyme label="b" type="f" corresp="#s8:l3">beschoren</rhyme>;</l>
        <l id="s8:l6" met="4" type="+-">Eensaamheyd is <rhyme label="c" type="m" corresp="#s8:l4">Arremoed</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Tragt gy dan in ware <rhyme label="a" type="m">vreugd</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Te besteden uwe <rhyme label="a" type="m" corresp="#s9:l1">jeugd</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Of uwe oude levens <rhyme label="b" type="f">jaren</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Denk, het allersoetste <rhyme label="c" type="m">soet</rhyme></l>
        <l id="s9:l5" met="4" type="+-">Is in het gesellig <rhyme label="b" type="f" corresp="#s9:l3">paren</rhyme>:</l>
        <l id="s9:l6" met="4" type="+-">Eensaamheyd is <rhyme label="c" type="m" corresp="#s9:l4">Arremoed</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

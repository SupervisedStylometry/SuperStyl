  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">LAet Heer van nu <rhyme label="a" type="m">voortaen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Dijn knecht in vreden <rhyme label="a" type="m" corresp="#s1:l1">gaen</rhyme>:</l>
        <l id="s1:l3" met="3" type="-+">Na dynen woord' <rhyme label="b" type="f">warachtigh</rhyme>.</l>
        <l id="s1:l4" met="3" type="-+">Die wyl' mijn oogh <rhyme label="c" type="m">verheugt</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Heeft  aenghesien met <rhyme label="c" type="m" corresp="#s1:l4">vreugt</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Dijn Heylant sterck end' <rhyme label="b" type="f" corresp="#s1:l3">machtigh</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Den heylant lang <rhyme label="a" type="m">verbeyt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">End' klaerlijck <rhyme label="a" type="m" corresp="#s2:l1">voorbereyt</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Den volcken, vanden <rhyme label="b" type="f">Heere</rhyme>:</l>
        <l id="s2:l4" met="3" type="-+">Een licht dat voorschijnt <rhyme label="c" type="m">klaer</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Den heydens <rhyme label="c" type="m" corresp="#s2:l4">allegaer</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Dijns volcks Israels <rhyme label="b" type="f" corresp="#s2:l3">eere</rhyme>.</l>
      </lg>
    </lg>

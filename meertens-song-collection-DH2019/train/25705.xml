  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Spruyten in Syons <rhyme label="a" type="m">dal</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Nu gheplant over <rhyme label="a" type="m" corresp="#s1:l1">al</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Ick wensch u Gods <rhyme label="b" type="f">ghenade</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Voor een vriendtlijcke <rhyme label="c" type="m">groet</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Van Godt bequaem en <rhyme label="c" type="m" corresp="#s1:l4">soet</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Altijdt vroech ende <rhyme label="b" type="f" corresp="#s1:l3">spade</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Op dat ghy mercken <rhyme label="d" type="m">meucht</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Of de nieu Mensch <rhyme label="d" type="m" corresp="#s1:l7">verjeucht</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Meerder wordt en <rhyme label="e" type="f">volcomen</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">En of ghy findt der <rhyme label="f" type="m">tijt</rhyme></l>
        <l id="s1:l11" met="3" type="+-">Dat ghy vernieuwet <rhyme label="f" type="m" corresp="#s1:l10">zijt</rhyme></l>
        <l id="s1:l12" met="3" type="-+">Oock wat hebt <rhyme label="e" type="f" corresp="#s1:l9">toeghenomen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">[...]delijck sult dat <rhyme label="a" type="m">ghy</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Bemercken recht daer <rhyme label="a" type="m" corresp="#s2:l1">by</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Ist dat ghy gaer <rhyme label="b" type="f">versinnen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Ende u schuldich <rhyme label="c" type="m">kent</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Dat ghy onvolmaeckt <rhyme label="c" type="m" corresp="#s2:l4">bent</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Van buyten en van <rhyme label="b" type="f" corresp="#s2:l3">binnen</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Wie Godt behaghen <rhyme label="d" type="m">sal</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Moet hier int Aerdsche <rhyme label="d" type="m" corresp="#s2:l7">dal</rhyme></l>
        <l id="s2:l9" met="3" type="-+">Hem fellen gantsch <rhyme label="e" type="f">mishaghen</rhyme>,</l>
        <l id="s2:l10" met="3" type="-+">Soo alle vromen <rhyme label="f" type="m">saen</rhyme></l>
        <l id="s2:l11" met="3" type="+-">Voortijdts hebben <rhyme label="f" type="m" corresp="#s2:l10">ghedaen</rhyme>,</l>
        <l id="s2:l12" met="3" type="-+">Deden haer nedrich <rhyme label="e" type="f" corresp="#s2:l9">draghen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Alsoo sult ghy dan <rhyme label="a" type="m">voort</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Gheern hooren Godes <rhyme label="a" type="m" corresp="#s3:l1">woort</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">T’doet die perfecktheyt <rhyme label="b" type="f">gheven</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Daer deur wast men en <rhyme label="c" type="m">groeyt</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Als t’gras van reghen <rhyme label="c" type="m" corresp="#s3:l4">bloeyt</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Tot den eeuwighen <rhyme label="b" type="f" corresp="#s3:l3">leven</rhyme>.</l>
        <l id="s3:l7" met="3" type="-+">De Mensche int <rhyme label="d" type="m">ghemeyn</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Van den broode <rhyme label="d" type="m" corresp="#s3:l7">alleyn</rhyme></l>
        <l id="s3:l9" met="3" type="-+">Niet en leeft, soo wy <rhyme label="e" type="f">weten</rhyme>,</l>
        <l id="s3:l10" met="3" type="-+">Maer van Gods woorden <rhyme label="f" type="m">claer</rhyme></l>
        <l id="s3:l11" met="3" type="+-">Leven die <rhyme label="f" type="m" corresp="#s3:l10">allegaer</rhyme></l>
        <l id="s3:l12" met="3" type="-+">Die dat gheestelijck <rhyme label="e" type="f" corresp="#s3:l9">eten</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Vander straffen <rhyme label="a" type="m">bespiet</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Die broederlijck <rhyme label="a" type="m" corresp="#s4:l1">gheschiet</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Die men gheern doet <rhyme label="b" type="f">ontfanghen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Wordt men oock seer <rhyme label="c" type="m">gheslicht</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Als men sulck goet <rhyme label="c" type="m" corresp="#s4:l4">bericht</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Gheern aenneemt met <rhyme label="b" type="f" corresp="#s4:l3">verlanghen</rhyme>:</l>
        <l id="s4:l7" met="3" type="-+">Wie castijdingh <rhyme label="d" type="m">verlaet</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Verwerpt sijn ziel als <rhyme label="d" type="m" corresp="#s4:l7">quaet</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">Maer die wordt wijs int <rhyme label="e" type="f">gronden</rhyme></l>
        <l id="s4:l10" met="3" type="-+">Die sy aenneemt te <rhyme label="f" type="m">recht</rhyme>,</l>
        <l id="s4:l11" met="3" type="+-">Hy sal wel een cloeck <rhyme label="f" type="m" corresp="#s4:l10">knecht</rhyme></l>
        <l id="s4:l12" met="3" type="-+">Voor Gods worden <rhyme label="e" type="f" corresp="#s4:l9">bevonden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Leeren moet men noch <rhyme label="a" type="m">meer</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Oft men oock Godt den <rhyme label="a" type="m" corresp="#s5:l1">Heer</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Stadich heeft voor sijn <rhyme label="b" type="f">ooghen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Sijn <rhyme label="c" type="m">teghenwoordicheyt</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Maeckt ons neerstich <rhyme label="c" type="m" corresp="#s5:l4">bereyt</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Tot sijnen dienst te <rhyme label="b" type="f" corresp="#s5:l3">voeghen</rhyme>:</l>
        <l id="s5:l7" met="3" type="-+">Als wy weten <rhyme label="d" type="m">certeyn</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Dat t’samen groot en <rhyme label="d" type="m" corresp="#s5:l7">cleyn</rhyme></l>
        <l id="s5:l9" met="3" type="-+">Hy aensiet onse <rhyme label="e" type="f">wercken</rhyme>,</l>
        <l id="s5:l10" met="3" type="-+">Soo zijn wy neerstich <rhyme label="f" type="m">snel</rhyme></l>
        <l id="s5:l11" met="3" type="+-">Om nu te wercken <rhyme label="f" type="m" corresp="#s5:l10">wel</rhyme>,</l>
        <l id="s5:l12" met="3" type="-+">Dus mach men t’groeyen <rhyme label="e" type="f" corresp="#s5:l9">mercken</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Int herte draghen <rhyme label="a" type="m">bloot</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Christi lijden en <rhyme label="a" type="m" corresp="#s6:l1">doot</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Doet wasschen en <rhyme label="b" type="f">vermeeren</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Den nieuwen Mensche <rhyme label="c" type="m">vroech</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Daerom oock Paulus <rhyme label="c" type="m" corresp="#s6:l4">droech</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Die litteyckens sijns <rhyme label="b" type="f" corresp="#s6:l3">Heeren</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Stadich int lichaem, <rhyme label="d" type="m">want</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Het verlicht ons <rhyme label="d" type="m" corresp="#s6:l7">nt’verstant</rhyme>,</l>
        <l id="s6:l9" met="3" type="-+">Doet het ghemoedt <rhyme label="e" type="f">ontsincken</rhyme>,</l>
        <l id="s6:l10" met="3" type="-+">Ontsteeckt die liefde <rhyme label="f" type="m">soet</rhyme>,</l>
        <l id="s6:l11" met="3" type="+-">Werckt heylich int <rhyme label="f" type="m" corresp="#s6:l10">ghemoet</rhyme></l>
        <l id="s6:l12" met="3" type="-+">Als men recht gaet <rhyme label="e" type="f" corresp="#s6:l9">bedincken</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Den nieuwen Mensch <rhyme label="a" type="m">verclaert</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Hem hier in <rhyme label="a" type="m" corresp="#s7:l1">openbaert</rhyme></l>
        <l id="s7:l3" met="3" type="-+">T’wassen en het <rhyme label="b" type="f">groeyen</rhyme>:</l>
        <l id="s7:l4" met="3" type="-+">Ghy die u ziel <rhyme label="c" type="m">bemint</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Siet of ghy’t oock <rhyme label="c" type="m" corresp="#s7:l4">bevint</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">En vyerich zijt uit <rhyme label="b" type="f" corresp="#s7:l3">bloeyen</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Hier op te hebben <rhyme label="d" type="m">acht</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Help Godt met sijner <rhyme label="d" type="m" corresp="#s7:l7">cracht</rhyme>,</l>
        <l id="s7:l9" met="3" type="-+">Hy wil ons wel <rhyme label="e" type="f">beraden</rhyme>,</l>
        <l id="s7:l10" met="3" type="-+">En wat ons noch <rhyme label="f" type="m">ontbreckt</rhyme>,</l>
        <l id="s7:l11" met="3" type="+-">Vervullen heel <rhyme label="f" type="m" corresp="#s7:l10">perfeckt</rhyme></l>
        <l id="s7:l12" met="3" type="-+">Wt louterer <rhyme label="e" type="f" corresp="#s7:l9">ghenaden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Godt die will ons bermhertich <rhyme label="a" type="m">zijn</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">En synen Seghen <rhyme label="b" type="f">gheuen</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Sijn aensicht ons met claren <rhyme label="a" type="m" corresp="#s1:l1">schijn</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Verlicht ten eewighe <rhyme label="b" type="f" corresp="#s1:l2">leuen</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">Op dat wy bekennen syne <rhyme label="c" type="m">werck</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">En wat hem bemindt op <rhyme label="d" type="f">deerde</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">En Christus ons Salicheyt, en <rhyme label="c" type="m" corresp="#s1:l5">Sterckt</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Den Heyden bekendt mach <rhyme label="d" type="f" corresp="#s1:l6">werden</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">En hun tot Godt <rhyme label="d" type="f" corresp="#s1:l6">bekeeren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Soo dancken Godt, ende louen <rhyme label="a" type="m">u</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">De Heyden ouer <rhyme label="b" type="f">alle</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">En alle de wereldt verblijdt haer <rhyme label="a" type="m" corresp="#s2:l1">nu</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En singt met grooten <rhyme label="b" type="f" corresp="#s2:l2">gheschalle</rhyme>:</l>
        <l id="s2:l5" met="4" type="-+">Dat ghy op deerd den Rechter <rhyme label="c" type="m">bist</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Die niet laet de sond <rhyme label="d" type="f">domineeren</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">U woordt den Troon, en weyde <rhyme label="c" type="m" corresp="#s2:l5">is</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Die tvolck houden recht <rhyme label="d" type="f" corresp="#s2:l6">stane</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Om te wandlen op rechter <rhyme label="d" type="f" corresp="#s2:l6">bane</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Het dancken Godt, ende louen <rhyme label="a" type="m">u</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Allen tvolck met weldaden <rhyme label="b" type="f">seere</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Dlandt brengt vruchten, en tverbetert <rhyme label="a" type="m" corresp="#s3:l1">nu</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">U woordt is wel gheraeckt <rhyme label="b" type="f" corresp="#s3:l2">Heere</rhyme>:</l>
        <l id="s3:l5" met="4" type="-+">Ons ghebenedij Godt Vader, Godt <rhyme label="c" type="m">Soon</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Ons ghebenedij Godt heyligher <rhyme label="d" type="f">Gheest</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Dien alle de wereldt eerst seer <rhyme label="c" type="m" corresp="#s3:l5">schoon</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">En voor hem sy vreesen <rhyme label="d" type="f" corresp="#s3:l6">aldermeest</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Nu spreeckt van herten, <rhyme label="d" type="f" corresp="#s3:l6">Amen</rhyme>.</l>
      </lg>
    </lg>

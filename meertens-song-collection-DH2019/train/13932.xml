    <melody>God weet wel wat zijn volk behoeft</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>M. van de Speybroek</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">WIe is 't die daer van Edom <rhyme label="a" type="m">komt</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Van Bosra met roo <rhyme label="b" type="f">kleeren</rhyme>?</l>
        <l id="s1:l3" met="4" type="-+">Dijn Bruydegom is hy <rhyme label="a" type="m" corresp="#s1:l1">ghenoemt</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En treckt, verciert in <rhyme label="b" type="f" corresp="#s1:l2">eeren</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Die van 't <rhyme label="b" type="f" corresp="#s1:l2">verseeren</rhyme></l>
        <l id="s1:l6" met="2" type="-+">Ons heeft <rhyme label="c" type="m">bevrijt</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Met sijn schoon <rhyme label="d" type="f">offerhande</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">Die hy den Vader <rhyme label="c" type="m" corresp="#s1:l6">gebenedijt</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Heeft gedaen tot eenen <rhyme label="d" type="f" corresp="#s1:l7">pande</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">Onser verlossinge <rhyme label="c" type="m" corresp="#s1:l6">wijt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Desen Pandt Christus, soo ick <rhyme label="a" type="m">versta</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Het Lammeken <rhyme label="b" type="f">verkoren</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Is te Bethlehem <rhyme label="a" type="m" corresp="#s2:l1">Juda</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Van eender Maeght <rhyme label="b" type="f" corresp="#s2:l2">geboren</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Lange te <rhyme label="b" type="f" corresp="#s2:l2">vooren</rhyme></l>
        <l id="s2:l6" met="2" type="-+">Was Hy <rhyme label="c" type="m">voorsien</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">En is tot een <rhyme label="d" type="f">ontlader</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">Gekomen en dese laetste <rhyme label="c" type="m" corresp="#s2:l6">ty'n</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Al van God sijnen <rhyme label="d" type="f" corresp="#s2:l7">Vader</rhyme>,</l>
        <l id="s2:l10" met="3" type="-+">Gelijck Petrus gaet <rhyme label="c" type="m" corresp="#s2:l6">bedien</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Een Offerhande heeft hy <rhyme label="a" type="m">gedaen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Die eeuwigh is van <rhyme label="b" type="f">weerden</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Duyvel noch doodt moghen niet <rhyme label="a" type="m" corresp="#s3:l1">schaen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Die hy verwan op <rhyme label="b" type="f" corresp="#s3:l2">Eerden</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Voor die <rhyme label="b" type="f" corresp="#s3:l2">volheerden</rhyme></l>
        <l id="s3:l6" met="2" type="-+">Al in sijn <rhyme label="c" type="m">Woordt</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">In heyligheyt en <rhyme label="d" type="f">vrede</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">Met liefde en broederlijck <rhyme label="c" type="m" corresp="#s3:l6">accoort</rhyme></l>
        <l id="s3:l9" met="3" type="-+">Al naer de nieuwe <rhyme label="d" type="f" corresp="#s3:l7">Stede</rhyme>,</l>
        <l id="s3:l10" met="3" type="-+">Door de smalle enge <rhyme label="c" type="m" corresp="#s3:l6">Poort</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Sijn doodt was hier ons leven <rhyme label="a" type="m">fijn</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Doen hy ons heeft <rhyme label="b" type="f">verworven</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Als wy lagen in 's doodts <rhyme label="a" type="m" corresp="#s4:l1">pijn</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Van Adams val <rhyme label="b" type="f" corresp="#s4:l2">bedorven</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Doen is hy <rhyme label="b" type="f" corresp="#s4:l2">gestorven</rhyme>,</l>
        <l id="s4:l6" met="2" type="-+">Gods Sone <rhyme label="c" type="m">goet</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Die 't door sijn heyligh <rhyme label="d" type="f">Lijden</rhyme></l>
        <l id="s4:l8" met="4" type="-+">Al heeft verwonnen met groot <rhyme label="c" type="m" corresp="#s4:l6">ootmoet</rhyme>;</l>
        <l id="s4:l9" met="3" type="-+">Dies zy hem t' allen <rhyme label="d" type="f" corresp="#s4:l7">tijden</rhyme></l>
        <l id="s4:l10" met="3" type="-+">Lof en danck in <rhyme label="c" type="m" corresp="#s4:l6">overvloet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Dese Wets vol-doeningh was in <rhyme label="a" type="m">hem</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Van alle schoone <rhyme label="b" type="f">figueren</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Een Koninc des vredes tot <rhyme label="a" type="m" corresp="#s5:l1">Salem</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Een rechte Priester <rhyme label="b" type="f" corresp="#s5:l2">puere</rhyme>;</l>
        <l id="s5:l5" met="2" type="-+">Die na <rhyme label="b" type="f" corresp="#s5:l2">Schriftuere</rhyme>,</l>
        <l id="s5:l6" met="2" type="-+">Het <rhyme label="c" type="m">Testament</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Bevestighde <rhyme label="d" type="f">gepresen</rhyme>,</l>
        <l id="s5:l8" met="4" type="-+">Met sijnen bloede <rhyme label="c" type="m" corresp="#s5:l6">excellent</rhyme>:</l>
        <l id="s5:l9" met="3" type="-+">Soo wy klaer mogen <rhyme label="d" type="f" corresp="#s5:l7">lesen</rhyme>,</l>
        <l id="s5:l10" met="3" type="-+">Davids Wortel, Begin en <rhyme label="c" type="m" corresp="#s5:l6">Endt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Den grooten Hoeck-steen is <rhyme label="a" type="m">Hy</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Die van den Berge <rhyme label="b" type="f">scheurde</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">Daer den Prophete Daniel <rhyme label="a" type="m" corresp="#s6:l1">vry</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Seer klaer af <rhyme label="b" type="f" corresp="#s6:l2">propheteerde</rhyme>,</l>
        <l id="s6:l5" met="2" type="-+">Die hem <rhyme label="b" type="f" corresp="#s6:l2">kleynneerde</rhyme></l>
        <l id="s6:l6" met="2" type="-+">Tot 's Cruycen <rhyme label="c" type="m">doodt</rhyme>;</l>
        <l id="s6:l7" met="3" type="-+">Om alsoo Adams <rhyme label="d" type="f">sonde</rhyme></l>
        <l id="s6:l8" met="4" type="-+">Weg te nemen, verstaet dit <rhyme label="c" type="m" corresp="#s6:l6">bloot</rhyme>:</l>
        <l id="s6:l9" met="3" type="-+">Ons te stellen <rhyme label="d" type="f" corresp="#s6:l7">ontbonden</rhyme>,</l>
        <l id="s6:l10" met="3" type="-+">Voor den Vader uyt liefden <rhyme label="c" type="m" corresp="#s6:l6">groot</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Hy is dat levende Hemels <rhyme label="a" type="m">Broodt</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Dat van boven neder <rhyme label="b" type="f">daelde</rhyme>;</l>
        <l id="s7:l3" met="4" type="-+">Tot een spijse der zielen <rhyme label="a" type="m" corresp="#s7:l1">bloot</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Alsoo hy selfs <rhyme label="b" type="f" corresp="#s7:l2">verhaelde</rhyme>;</l>
        <l id="s7:l5" met="2" type="-+">Die niet en <rhyme label="b" type="f" corresp="#s7:l2">draelde</rhyme>,</l>
        <l id="s7:l6" met="2" type="-+">Maer seyde <rhyme label="c" type="m">waer</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Hoe dat hy was <rhyme label="d" type="f">gekommen</rhyme></l>
        <l id="s7:l8" met="4" type="-+">Van God sijnen Hemelschen <rhyme label="c" type="m" corresp="#s7:l6">Va'er</rhyme></l>
        <l id="s7:l9" met="3" type="-+">En dat hy <rhyme label="d" type="f" corresp="#s7:l7">wederomme</rhyme></l>
        <l id="s7:l10" met="3" type="-+">Soude trecken daer <rhyme label="c" type="m" corresp="#s7:l6">naer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Hy is den Wegh een rechte <rhyme label="a" type="m">baen</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">De Waerheyt, en het <rhyme label="b" type="f">Leven</rhyme>;</l>
        <l id="s8:l3" met="4" type="-+">Om tot den Vader in te <rhyme label="a" type="m" corresp="#s8:l1">gaen</rhyme>:</l>
        <l id="s8:l4" met="3" type="-+">Soo wy vinden <rhyme label="b" type="f" corresp="#s8:l2">beschreven</rhyme>,</l>
        <l id="s8:l5" met="2" type="-+">De deure <rhyme label="b" type="f" corresp="#s8:l2">verheven</rhyme>,</l>
        <l id="s8:l6" met="2" type="-+">Tot den <rhyme label="c" type="m">schaep-stal</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Die anders wil <rhyme label="d" type="f">in-komen</rhyme>,</l>
        <l id="s8:l8" met="4" type="-+">Dat zijn Dieven en Moordenaers <rhyme label="c" type="m" corresp="#s8:l6">al</rhyme>,</l>
        <l id="s8:l9" met="3" type="-+">Gaetse Christus selfs <rhyme label="d" type="f" corresp="#s8:l7">noemen</rhyme>,</l>
        <l id="s8:l10" met="3" type="-+">Ende niet van sijn <rhyme label="c" type="m" corresp="#s8:l6">getal</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Oorlof hier hebt ghy nu <rhyme label="a" type="m">gehoort</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Op des Propheten <rhyme label="b" type="f">vrage</rhyme>;</l>
        <l id="s9:l3" met="4" type="-+">Tot onderwijs een kort <rhyme label="a" type="m" corresp="#s9:l1">antwoort</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Die ick vooren <rhyme label="b" type="f" corresp="#s9:l2">drage</rhyme>:</l>
        <l id="s9:l5" met="2" type="-+">Na Schrifts <rhyme label="b" type="f" corresp="#s9:l2">gewagen</rhyme>,</l>
        <l id="s9:l6" met="2" type="-+">Geen <rhyme label="c" type="m">saligheyt</rhyme></l>
        <l id="s9:l7" met="3" type="-+">Is buyten Hem te <rhyme label="d" type="f">vinden</rhyme>:</l>
        <l id="s9:l8" met="4" type="-+">Die anders meent, die is <rhyme label="c" type="m" corresp="#s9:l6">verleydt</rhyme>,</l>
        <l id="s9:l9" met="3" type="-+">En wandelt als een <rhyme label="d" type="f" corresp="#s9:l7">blinden</rhyme>,</l>
        <l id="s9:l10" met="3" type="-+">Die 't gesicht' is <rhyme label="c" type="m" corresp="#s9:l6">onbereyt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <author>Jacob Rosant</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ALs Jesus wilde haest <rhyme label="a" type="f">verscheyden</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Van 't Avond-mael, en soude <rhyme label="b" type="m">gaen</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Om hem tot lijden te <rhyme label="a" type="f" corresp="#s1:l1">bereyden</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Gaf hy sijn Jongers dees <rhyme label="b" type="m" corresp="#s1:l2">vermaen</rhyme>:</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Soo gy mijn liefde wilt <rhyme label="a" type="f">toe-dragen</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Maekt dat gy mijn Wet-doenders <rhyme label="b" type="m">bent</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En ik sal mijnen Vader <rhyme label="a" type="f" corresp="#s2:l1">vragen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Dat hy den ander Trooster <rhyme label="b" type="m" corresp="#s2:l2">sent</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Die met u eeuwelijke <rhyme label="a" type="f">blijve</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Des Waerheyts Geest, die welke <rhyme label="b" type="m">niet</rhyme></l>
        <l id="s3:l3" met="4" type="-+">In deese Weerelt kan <rhyme label="a" type="f" corresp="#s3:l1">beklijve</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Want die hem niet en kent, of <rhyme label="b" type="m" corresp="#s3:l2">siet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Maer gy-lie hem heel wel sult <rhyme label="a" type="f">weeten</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Hy met, en in u blijven <rhyme label="b" type="m">sal</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Ik sal u niet als Wees <rhyme label="a" type="f" corresp="#s4:l1">vergeeten</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Ik sal weer-koomen by u <rhyme label="b" type="m" corresp="#s4:l2">al</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">De weerelt sal na <rhyme label="a" type="f">weynigheede</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Mijn niet meer sien; maer heel wel <rhyme label="b" type="m">gy</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Want ik nogh leef, en gy-lie <rhyme label="a" type="f" corresp="#s5:l1">meede</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Nogh leeven sult gelijke <rhyme label="b" type="m" corresp="#s5:l2">my</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Dan sal  u-lieden <rhyme label="a" type="f">allegade</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Nogh eerst te deegen sijn <rhyme label="b" type="m">bekent</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Hoe dat ik ben in mijnen <rhyme label="a" type="f" corresp="#s6:l1">Vader</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">En in u, en gy in mijn <rhyme label="b" type="m" corresp="#s6:l2">bent</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Die mijn gebooden houdt te <rhyme label="a" type="f">gader</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Die is 't die mijn  bemindt, en <rhyme label="b" type="m">hy</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Is lief by mijn, en by mijn <rhyme label="a" type="f" corresp="#s7:l1">Vader</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Die sal ik openbaren <rhyme label="b" type="m" corresp="#s7:l2">my</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">O Heer, wy bidden wilt ons <rhyme label="a" type="f">gunnen</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Den Geest des Waerheyts, op dat <rhyme label="b" type="m">wy</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Door hem u beeter minnen <rhyme label="a" type="f" corresp="#s8:l1">kunnen</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">En eeuwelijke blijven <rhyme label="b" type="m" corresp="#s8:l2">by</rhyme>.</l>
      </lg>
    </lg>
  </text>

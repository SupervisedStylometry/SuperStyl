  <author>Claes Stapel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Wereld! die ons <rhyme label="a" type="m">hert</rhyme></l>
        <l id="s1:l2" met="4" type="+-">In veel idelheid <rhyme label="a" type="m" corresp="#s1:l1">verwerd</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">En daar naar beloond met <rhyme label="a" type="m" corresp="#s1:l1">smert</rhyme>;</l>
        <l id="s1:l4" met="2" type="-+">Die u wel <rhyme label="b" type="m">kend</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">En van u <rhyme label="b" type="m" corresp="#s1:l4">wend</rhyme></l>
        <l id="s1:l6" met="2" type="-+">Zijns herten <rhyme label="c" type="m">wensch</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Hoe gelukkig is die <rhyme label="c" type="m" corresp="#s1:l6">Mensch</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">De Mensch die u <rhyme label="a" type="m">bemind</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Zeg het my dog wat hy <rhyme label="a" type="m" corresp="#s2:l1">vind</rhyme>?</l>
        <l id="s2:l3" met="4" type="+-">Anders niet als rook en <rhyme label="a" type="m" corresp="#s2:l1">wind</rhyme>:</l>
        <l id="s2:l4" met="2" type="-+">Al uw <rhyme label="b" type="m">vertoon</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Dat nu zoo <rhyme label="b" type="m" corresp="#s2:l4">schoon</rhyme></l>
        <l id="s2:l6" met="2" type="-+">En heerlijk <rhyme label="c" type="m">schijnd</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Morgen wel als rook <rhyme label="c" type="m" corresp="#s2:l6">verdwijnd</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Al 't goed, dat gy <rhyme label="a" type="m">vervaat</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">En daar met gy ons <rhyme label="a" type="m" corresp="#s3:l1">verraad</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Is Rijkdom, Wellust, en <rhyme label="a" type="m" corresp="#s3:l1">Staat</rhyme>.</l>
        <l id="s3:l4" met="2" type="-+">Dien gy dit <rhyme label="b" type="m">geeft</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Zie daar, die <rhyme label="b" type="m" corresp="#s3:l4">heeft</rhyme></l>
        <l id="s3:l6" met="2" type="-+">Al wat gy <rhyme label="c" type="m">gund</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">En al wat gy geeven <rhyme label="c" type="m" corresp="#s3:l6">kund</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">De Wellust, zoo elk <rhyme label="a" type="m">ziet</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Kan langduurig weesen <rhyme label="a" type="m" corresp="#s4:l1">niet</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Of zy wordt van zelfs <rhyme label="a" type="m" corresp="#s4:l1">verdriet</rhyme>;</l>
        <l id="s4:l4" met="2" type="-+">Doet daar dan <rhyme label="b" type="m">by</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Hoe haast dat <rhyme label="b" type="m" corresp="#s4:l4">zy</rhyme></l>
        <l id="s4:l6" met="2" type="-+">In pijn en <rhyme label="c" type="m">smert</rhyme></l>
        <l id="s4:l7" met="4" type="-+">Menigmaal veranderd <rhyme label="c" type="m" corresp="#s4:l6">werd</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Die nu is rijk van <rhyme label="a" type="m">goed</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Krijgt ligt morgen <rhyme label="a" type="m" corresp="#s5:l1">tegenspoed</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">En vaard schielijck <rhyme label="a" type="m" corresp="#s5:l1">bankeroet</rhyme>:</l>
        <l id="s5:l4" met="2" type="-+">Schip-breuk, of <rhyme label="b" type="m">brand</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">Of twist in 't <rhyme label="b" type="m" corresp="#s5:l4">land</rhyme>,</l>
        <l id="s5:l6" met="2" type="-+">Of ande're <rhyme label="c" type="m">nood</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Hem van rijkdom ligt <rhyme label="c" type="m" corresp="#s5:l6">ontbloot</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">En die nu leeft in <rhyme label="a" type="m">eer</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Zoo 't geval eens neemt een <rhyme label="a" type="m" corresp="#s6:l1">keer</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">'t Stoot hem lichtelijk ter <rhyme label="a" type="m" corresp="#s6:l1">ne'er</rhyme>:</l>
        <l id="s6:l4" met="2" type="-+">Heeden een <rhyme label="b" type="m">Graaf</rhyme>,</l>
        <l id="s6:l5" met="2" type="-+">Morgen een <rhyme label="b" type="m" corresp="#s6:l4">Slaaf</rhyme>;</l>
        <l id="s6:l6" met="2" type="-+">Nu in de <rhyme label="c" type="m">wet</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Morgen is men <rhyme label="c" type="m" corresp="#s6:l6">afgezet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Maar of 't gebeurden <rhyme label="a" type="m">al</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Dat het wankelbaar <rhyme label="a" type="m" corresp="#s7:l1">geval</rhyme></l>
        <l id="s7:l3" met="4" type="+-">U dit Schijn-goed niet <rhyme label="a" type="m" corresp="#s7:l1">ontstal</rhyme>;</l>
        <l id="s7:l4" met="2" type="-+">Naar weinig <rhyme label="b" type="m">tijd</rhyme></l>
        <l id="s7:l5" met="2" type="-+">Komt God en <rhyme label="b" type="m" corresp="#s7:l4">snijd</rhyme></l>
        <l id="s7:l6" met="2" type="-+">U 't leven <rhyme label="c" type="m">af</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">En men leid u naakt in 't <rhyme label="c" type="m" corresp="#s7:l6">graf</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Die dan door schijn <rhyme label="a" type="m">verra'en</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Naar Gods rijk niet heeft <rhyme label="a" type="m" corresp="#s8:l1">gestaan</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">En moet al het Vee <rhyme label="a" type="m" corresp="#s8:l1">vergaan</rhyme>,</l>
        <l id="s8:l4" met="2" type="-+">Komt die niet <rhyme label="b" type="m">wel</rhyme></l>
        <l id="s8:l5" met="2" type="-+">In groot <rhyme label="b" type="m" corresp="#s8:l4">gequel</rhyme>?</l>
        <l id="s8:l6" met="2" type="-+">En heeft zijn <rhyme label="c" type="m">zin</rhyme></l>
        <l id="s8:l7" met="4" type="-+">Niet gevolgd een dwaaze <rhyme label="c" type="m" corresp="#s8:l6">min</rhyme>?</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Nadien de Weereld <rhyme label="a" type="m">dan</rhyme></l>
        <l id="s9:l2" met="4" type="+-">My niet anders geeven <rhyme label="a" type="m" corresp="#s9:l1">kan</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Ziet, ik trek mijn hert daar <rhyme label="a" type="m" corresp="#s9:l1">van</rhyme>:</l>
        <l id="s9:l4" met="2" type="-+">Waar toe <rhyme label="b" type="m">gewroet</rhyme></l>
        <l id="s9:l5" met="2" type="-+">Om nietig <rhyme label="b" type="m" corresp="#s9:l4">goed</rhyme>,</l>
        <l id="s9:l6" met="2" type="-+">En hem <rhyme label="c" type="m">gepijnd</rhyme></l>
        <l id="s9:l7" met="4" type="-+">Om een schaduw, die <rhyme label="c" type="m" corresp="#s9:l6">verdwijnd</rhyme>?</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Waar toe zijn <rhyme label="a" type="m">zinlijkheid</rhyme></l>
        <l id="s10:l2" met="4" type="+-">Op een vlugtig goed <rhyme label="a" type="m" corresp="#s10:l1">geleid</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">En slechts pijn en smert <rhyme label="a" type="m" corresp="#s10:l1">bereid</rhyme>?</l>
        <l id="s10:l4" met="2" type="-+">Want die een <rhyme label="b" type="m">ding</rhyme></l>
        <l id="s10:l5" met="2" type="-+">Heel <rhyme label="b" type="m" corresp="#s10:l4">zonderling</rhyme></l>
        <l id="s10:l6" met="2" type="-+">In 't hart <rhyme label="c" type="m">verkiest</rhyme>,</l>
        <l id="s10:l7" met="4" type="-+">Treurd, wanneer hy dat <rhyme label="c" type="m" corresp="#s10:l6">verliest</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Waar toe zoo zeer <rhyme label="a" type="m">bemind</rhyme>,</l>
        <l id="s11:l2" met="4" type="+-">Dat den Mensche heel <rhyme label="a" type="m" corresp="#s11:l1">verblind</rhyme>,</l>
        <l id="s11:l3" met="4" type="+-">En aan d' aarde zoo <rhyme label="a" type="m" corresp="#s11:l1">verbind</rhyme>,</l>
        <l id="s11:l4" met="2" type="-+">Dat hy op <rhyme label="b" type="m">God</rhyme>,</l>
        <l id="s11:l5" met="2" type="-+">En zijn <rhyme label="b" type="m" corresp="#s11:l4">gebod</rhyme>,</l>
        <l id="s11:l6" met="2" type="-+">Geen acht en <rhyme label="c" type="m">slaat</rhyme>,</l>
        <l id="s11:l7" met="4" type="-+">En in 't eind verlooren <rhyme label="c" type="m" corresp="#s11:l6">gaat</rhyme>?</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Gy Goddelijk <rhyme label="a" type="m">geslacht</rhyme></l>
        <l id="s12:l2" met="4" type="+-">Die dit nietig goed <rhyme label="a" type="m" corresp="#s12:l1">veracht</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">En naa veer en beter <rhyme label="a" type="m" corresp="#s12:l1">tragt</rhyme>.</l>
        <l id="s12:l4" met="2" type="-+">Tel my met <rhyme label="b" type="m">u</rhyme>,</l>
        <l id="s12:l5" met="2" type="-+">Ik heb een <rhyme label="b" type="m" corresp="#s12:l4">gruw</rhyme></l>
        <l id="s12:l6" met="2" type="-+">Van d' <rhyme label="c" type="m">ydelheid</rhyme>,</l>
        <l id="s12:l7" met="4" type="-+">Die het aardze Volk <rhyme label="c" type="m" corresp="#s12:l6">verleid</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Gy tragt alleen naa <rhyme label="a" type="m">deugd</rhyme>,</l>
        <l id="s13:l2" met="4" type="+-">Die u meer dan aardsche <rhyme label="a" type="m" corresp="#s13:l1">vreugd</rhyme>,</l>
        <l id="s13:l3" met="4" type="+-">Meer dan geld en staat <rhyme label="a" type="m" corresp="#s13:l1">verheugd</rhyme>:</l>
        <l id="s13:l4" met="2" type="-+">Want uw <rhyme label="b" type="m">gesigt</rhyme></l>
        <l id="s13:l5" met="2" type="-+">Dat is <rhyme label="b" type="m" corresp="#s13:l4">verligt</rhyme>,</l>
        <l id="s13:l6" met="2" type="-+">Dies acht gy <rhyme label="c" type="m">regt</rhyme></l>
        <l id="s13:l7" met="4" type="-+">'t Aardze goed voor u te <rhyme label="c" type="m" corresp="#s13:l6">slecht</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">De deugd van Godlijk <rhyme label="a" type="m">goed</rhyme>,</l>
        <l id="s14:l2" met="4" type="+-">Die Gods gunst verwerven <rhyme label="a" type="m" corresp="#s14:l1">doet</rhyme>,</l>
        <l id="s14:l3" met="4" type="+-">Die is waardig uw <rhyme label="a" type="m" corresp="#s14:l1">gemoed</rhyme>,</l>
        <l id="s14:l4" met="2" type="-+">Die u 't <rhyme label="b" type="m">geval</rhyme></l>
        <l id="s14:l5" met="2" type="-+">Niet rooven <rhyme label="b" type="m" corresp="#s14:l4">zal</rhyme>,</l>
        <l id="s14:l6" met="2" type="-+">Waar van de <rhyme label="c" type="m">dood</rhyme>,</l>
        <l id="s14:l7" met="4" type="-+">Die 't al neemt, u niet <rhyme label="c" type="m" corresp="#s14:l6">ontbloot</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">De deugd, die is zoo <rhyme label="a" type="m">schoon</rhyme>,</l>
        <l id="s15:l2" met="4" type="+-">Dat zy is van zelfs haar <rhyme label="a" type="m" corresp="#s15:l1">loon</rhyme></l>
        <l id="s15:l3" met="4" type="+-">En na geeft zy d' eeuwige <rhyme label="a" type="m" corresp="#s15:l1">kroon</rhyme>:</l>
        <l id="s15:l4" met="2" type="-+">Die haar <rhyme label="b" type="m">bemind</rhyme>,</l>
        <l id="s15:l5" met="2" type="-+">Die Mensch <rhyme label="b" type="m" corresp="#s15:l4">bevindt</rhyme>,</l>
        <l id="s15:l6" met="2" type="-+">Dat zy <rhyme label="c" type="m">alleen</rhyme></l>
        <l id="s15:l7" met="4" type="-+">Stellen kan ons hert te <rhyme label="c" type="m" corresp="#s15:l6">vreen</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="3" type="-+">Aangaande kost en <rhyme label="a" type="m">kleer</rhyme>,</l>
        <l id="s16:l2" met="4" type="+-">Die verleend of God de <rhyme label="a" type="m" corresp="#s16:l1">Heer</rhyme>,</l>
        <l id="s16:l3" met="4" type="+-">Door een reedelijk <rhyme label="a" type="m" corresp="#s16:l1">geneer</rhyme>,</l>
        <l id="s16:l4" met="2" type="-+">Die touw en <rhyme label="b" type="m">mild</rhyme></l>
        <l id="s16:l5" met="2" type="-+">Het zorgloos <rhyme label="b" type="m" corresp="#s16:l4">wild</rhyme></l>
        <l id="s16:l6" met="2" type="-+">Versorgd en <rhyme label="c" type="m">voed</rhyme>,</l>
        <l id="s16:l7" met="4" type="-+">Dat geen voorraad op en <rhyme label="c" type="m" corresp="#s16:l6">doet</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="3" type="-+">Of zoo gy armoe <rhyme label="a" type="m">lijd</rhyme>,</l>
        <l id="s17:l2" met="4" type="+-">En veel zwarigheid en <rhyme label="a" type="m" corresp="#s17:l1">strijd</rhyme>,</l>
        <l id="s17:l3" met="4" type="+-">En dat deugd is al uw <rhyme label="a" type="m" corresp="#s17:l1">vlijt</rhyme>,</l>
        <l id="s17:l4" met="2" type="-+">Die is u <rhyme label="b" type="m">zoet</rhyme>;</l>
        <l id="s17:l5" met="2" type="-+">Wat uw <rhyme label="b" type="m" corresp="#s17:l4">gemoed</rhyme></l>
        <l id="s17:l6" met="2" type="-+">Dat is <rhyme label="c" type="m">gewis</rhyme>,</l>
        <l id="s17:l7" met="4" type="-+">Dat God uw beloonder <rhyme label="c" type="m" corresp="#s17:l6">is</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="3" type="-+">En valt u beter <rhyme label="a" type="m">toe</rhyme>,</l>
        <l id="s18:l2" met="4" type="+-">Dat ontfangt gy ook in 't <rhyme label="a" type="m" corresp="#s18:l1">goe</rhyme>,</l>
        <l id="s18:l3" met="4" type="+-">Maar maakt u daarom niet <rhyme label="a" type="m" corresp="#s18:l1">moe</rhyme>:</l>
        <l id="s18:l4" met="2" type="-+">En als het <rhyme label="b" type="m">vlied</rhyme>,</l>
        <l id="s18:l5" met="2" type="-+">Gy acht het <rhyme label="b" type="m" corresp="#s18:l4">niet</rhyme>,</l>
        <l id="s18:l6" met="2" type="-+">Op dat de <rhyme label="c" type="m">min</rhyme></l>
        <l id="s18:l7" met="4" type="-+">Daar niet aan en hecht uw <rhyme label="c" type="m" corresp="#s18:l6">zin</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="3" type="-+">'t Geen dat gy hebt te <rhyme label="a" type="m">veel</rhyme>,</l>
        <l id="s19:l2" met="4" type="+-">Houd gy niet voor u <rhyme label="a" type="m" corresp="#s19:l1">geheel</rhyme>,</l>
        <l id="s19:l3" met="4" type="+-">Maar de naaste krijgt zijn <rhyme label="a" type="m" corresp="#s19:l1">deel</rhyme>,</l>
        <l id="s19:l4" met="2" type="-+">Ook is 't <rhyme label="b" type="m">genot</rhyme>,</l>
        <l id="s19:l5" met="2" type="-+">Door Gods <rhyme label="b" type="m" corresp="#s19:l4">Gebod</rhyme>,</l>
        <l id="s19:l6" met="2" type="-+">Gericht na <rhyme label="c" type="m">maat</rhyme>,</l>
        <l id="s19:l7" met="4" type="-+">Niet na weeld en <rhyme label="c" type="m" corresp="#s19:l6">overdaad</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="3" type="-+">Hoe dan 't Geval hem <rhyme label="a" type="m">keerd</rhyme>,</l>
        <l id="s20:l2" met="4" type="+-">En het aardze Volk <rhyme label="a" type="m" corresp="#s20:l1">verveert</rhyme>,</l>
        <l id="s20:l3" met="4" type="+-">Gy blijft altijd <rhyme label="a" type="m" corresp="#s20:l1">onverzeerd</rhyme>:</l>
        <l id="s20:l4" met="2" type="-+">Hier heb gy 't <rhyme label="b" type="m">wel</rhyme>,</l>
        <l id="s20:l5" met="2" type="-+">Want geen <rhyme label="b" type="m" corresp="#s20:l4">gequel</rhyme>,</l>
        <l id="s20:l6" met="2" type="-+">Uw rust <rhyme label="c" type="m">beroofd</rhyme>,</l>
        <l id="s20:l7" met="4" type="-+">En u is Gods rijk <rhyme label="c" type="m" corresp="#s20:l6">beloofd</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

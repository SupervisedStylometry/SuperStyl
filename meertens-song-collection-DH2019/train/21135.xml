  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">GOdts g'nade, zegen, en <rhyme label="a" type="f">goetheden</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Wensch ick de Bruydegom en <rhyme label="b" type="m">Bruydt</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">De Heer geleydt u in en <rhyme label="b" type="m" corresp="#s1:l2">uyt</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Al na zijn liefste wil en <rhyme label="a" type="f" corresp="#s1:l1">zeden</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">In liefd' en <rhyme label="a" type="f" corresp="#s1:l1">vreeden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">V Bruylofs-Feest wilt nu <rhyme label="a" type="f">hanteren</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Godt-vruchtelijck met lof en <rhyme label="b" type="m">deught</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Genuchelijck met soete <rhyme label="b" type="m" corresp="#s2:l2">vreught</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Op dat u Bruylofts <rhyme label="a" type="f" corresp="#s2:l1">converseren</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Is tot Godts <rhyme label="a" type="f" corresp="#s2:l1">eeren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Die u als sijn lief kinders <rhyme label="a" type="f">kleyne</rhyme></l>
        <l id="s3:l2" met="4" type="-+">In 't Huwelijck nu heeft <rhyme label="b" type="m">gepaert</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Weldadelijck van goeder <rhyme label="b" type="m" corresp="#s3:l2">aert</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Leeft met malkanderen <rhyme label="a" type="f" corresp="#s3:l1">gemeyne</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Suyver en <rhyme label="a" type="f" corresp="#s3:l1">reyne</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Soo sal Godt sijn zegen <rhyme label="a" type="f">uyt-gieten</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Over u altijdt meer en <rhyme label="b" type="m">meer</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En u vol-starcken in zijn <rhyme label="b" type="m" corresp="#s4:l2">leer</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Gelucksalige kind'ren <rhyme label="a" type="f" corresp="#s4:l1">genieten</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Sonder <rhyme label="a" type="f" corresp="#s4:l1">verdrieten</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">V liefd' en toegeneyghd' <rhyme label="a" type="f">gemoeden</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Met trouw en beloften <rhyme label="b" type="m">vervaet</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Tot een Christ'lijcke <rhyme label="b" type="m" corresp="#s5:l2">Echte-staet</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Wil u de Heere in <rhyme label="a" type="f" corresp="#s5:l1">behoeden</rhyme></l>
        <l id="s5:l5" met="2" type="-+">Ende <rhyme label="a" type="f" corresp="#s5:l1">op-voeden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">In deughden ende goede <rhyme label="a" type="f">zeden</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Tot blijdtschap van u Ouders <rhyme label="b" type="m">goet</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">En eere van het naeste <rhyme label="b" type="m" corresp="#s6:l2">bloet</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">De Heere geeft u zijnen <rhyme label="a" type="f" corresp="#s6:l1">vreede</rhyme>,</l>
        <l id="s6:l5" met="2" type="-+">En <rhyme label="a" type="f" corresp="#s6:l1">saligheden</rhyme>.</l>
      </lg>
    </lg>
  </text>

      <category translation="emotions">emoties</category>
      <category translation="amusement">vermaak</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Ik mag voorwaar wel <rhyme label="a" type="f">klaege</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Want ik ben heel <rhyme label="b" type="m">bedroeft</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Zy doen my niet als <rhyme label="a" type="f" corresp="#s1:l1">plagen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Een ieder wakker <rhyme label="b" type="m" corresp="#s1:l2">snoeft</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Al van liedjes te <rhyme label="a" type="f">maaken</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">‘t Is waer ik heb ‘t <rhyme label="b" type="m">verdient</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Gy mag het nu niet wel <rhyme label="a" type="f" corresp="#s2:l1">staken</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En blyf dan nog myn <rhyme label="b" type="m" corresp="#s2:l2">vriend</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ik was doe in die <rhyme label="a" type="f">dagen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Met dese kwael <rhyme label="b" type="m">bezet</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Ik ging toe aen ‘t <rhyme label="a" type="f" corresp="#s3:l1">vraege</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">De boose hier wel op <rhyme label="b" type="m" corresp="#s3:l2">let</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Die had my daer <rhyme label="a" type="f">gevange</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Al in zijn looze <rhyme label="b" type="m">strik</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Ik ben daer voor zo <rhyme label="a" type="f" corresp="#s4:l1">bange</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Ik heb voor u een <rhyme label="b" type="m" corresp="#s4:l2">schrik</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">ô Heer wilt mijn <rhyme label="a" type="f">behoede</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Vergeeft my dese <rhyme label="b" type="m">keer</rhyme>;</l>
        <l id="s5:l3" met="3" type="-+">Wilt myn dit kwaed <rhyme label="a" type="f" corresp="#s5:l1">vergoede</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Ik doe het nimmer <rhyme label="b" type="m" corresp="#s5:l2">weer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Wilt myn daer voor <rhyme label="a" type="f">bewaare</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">En ook een ieder <rhyme label="b" type="m">een</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Ook mogt ik wat <rhyme label="a" type="f" corresp="#s6:l1">bedaren</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">‘t Lyd even als een <rhyme label="b" type="m" corresp="#s6:l2">steen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Al op mijn hert <rhyme label="a" type="f">gevalle</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">ô Droevig <rhyme label="b" type="m">ongeluk</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Mijn dunkt zy moeste <rhyme label="a" type="f" corresp="#s7:l1">alle</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Betreure zo een <rhyme label="b" type="m" corresp="#s7:l2">stuk</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Og wilt my dog <rhyme label="a" type="f">vertrooste</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Want ik ben in <rhyme label="b" type="m">berouw</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Het spijt my ‘t <rhyme label="a" type="f" corresp="#s8:l1">aldergrootste</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Al van mijn waarde <rhyme label="b" type="m" corresp="#s8:l2">vrouw</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Maar al die dit <rhyme label="a" type="f">bespotte</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Ey lieve wagt u <rhyme label="b" type="m">wel</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Gy zyt dog alle <rhyme label="a" type="f" corresp="#s9:l1">sotte</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Al kent gy nog zo <rhyme label="b" type="m" corresp="#s9:l2">wel</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Veel zijnder wel <rhyme label="a" type="f">verborgen</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Agter een lose <rhyme label="b" type="m">schyn</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Die nu en dan wel <rhyme label="a" type="f" corresp="#s10:l1">sorge</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Het mogt wel anders <rhyme label="b" type="m" corresp="#s10:l2">zijn</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Ey wilt dog niet <rhyme label="a" type="f">snoeven</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Al op u <rhyme label="b" type="m">eerbaarheyt</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Maar wilt u eens <rhyme label="a" type="f" corresp="#s11:l1">beproeven</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Waar dat u eer al <rhyme label="b" type="m" corresp="#s11:l2">tyd</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Als men het wel <rhyme label="a" type="f">besogte</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Hoe veele zijnder <rhyme label="b" type="m">wel</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Die op dit stuk niet <rhyme label="a" type="f" corresp="#s12:l1">dogte</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Al zijnse nog zo <rhyme label="b" type="m" corresp="#s12:l2">snel</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Hoe wel het my <rhyme label="a" type="f">berouwde</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Het is een zondig <rhyme label="b" type="m">kwaat</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">En ik berou nu <rhyme label="a" type="f" corresp="#s13:l1">toonde</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Van deese snode <rhyme label="b" type="m" corresp="#s13:l2">daat</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Daar wil ik in <rhyme label="a" type="f">volherde</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Tot in mijn laatste <rhyme label="b" type="m">tyd</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Op dat ik zo mag <rhyme label="a" type="f" corresp="#s14:l1">werde</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">Van alle kwaat <rhyme label="b" type="m" corresp="#s14:l2">bevryd</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Dat zal ik zo gaan <rhyme label="a" type="f">wenschen</rhyme>,</l>
        <l id="s15:l2" met="3" type="-+">Met al myn hart en <rhyme label="b" type="m">ziel</rhyme>,</l>
        <l id="s15:l3" met="3" type="-+">Dat ik en alle <rhyme label="a" type="f" corresp="#s15:l1">Menschen</rhyme>,</l>
        <l id="s15:l4" met="3" type="-+">Nooit in dit kwaat meer <rhyme label="b" type="m" corresp="#s15:l2">viel</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

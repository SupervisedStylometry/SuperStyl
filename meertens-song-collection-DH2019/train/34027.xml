  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">UW' Broeders Iesu <rhyme label="a" type="m">altesaem</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Uw' vroomheydt prijsen <rhyme label="b" type="m">triumphant</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">En sy verbreyden uwe <rhyme label="a" type="m" corresp="#s1:l1">faem</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Ter oorsaek dat gy soo <rhyme label="b" type="m" corresp="#s1:l2">valjant</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Tot eer en lof van uwe <rhyme label="a" type="m" corresp="#s1:l1">Naem</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Hebt uw' victorieuse <rhyme label="b" type="m" corresp="#s1:l2">handt</rhyme></l>
        <l id="s1:l7" met="2" type="-+">Met groot <rhyme label="c" type="m">gewelt</rhyme></l>
        <l id="s1:l8" met="2" type="-+">Op d' nek <rhyme label="c" type="m" corresp="#s1:l7">gestelt</rhyme></l>
        <l id="s1:l9" met="4" type="-+">Uws vyandts, en hem <rhyme label="c" type="m" corresp="#s1:l7">neergevelt</rhyme>,</l>
        <l id="s1:l10" met="4" type="-+">En als een Leeuw de buydt <rhyme label="d" type="m">onthaelt</rhyme>,</l>
        <l id="s1:l11" met="4" type="+-">Terwijl gy scheent in slaep <rhyme label="d" type="m" corresp="#s1:l10">gedaelt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Gy hebt soo dapperlijk <rhyme label="a" type="m">verrast</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Den ouden Draek den <rhyme label="b" type="m">Sathanas</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En die gebonden waren <rhyme label="a" type="m" corresp="#s2:l1">vast</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">In dien poel daer geen water <rhyme label="b" type="m" corresp="#s2:l2">was</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Die hebt gy daer van daen <rhyme label="a" type="m" corresp="#s2:l1">ontlast</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">En van haer bandt ontslagen <rhyme label="b" type="m" corresp="#s2:l2">ras</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">En door uw <rhyme label="c" type="m">bloedt</rhyme></l>
        <l id="s2:l8" met="2" type="-+">Voldaen de <rhyme label="c" type="m" corresp="#s2:l7">boedt</rhyme>,</l>
        <l id="s2:l9" met="4" type="-+">Aen 't Kruyce stervend' met <rhyme label="c" type="m" corresp="#s2:l7">ootmoet</rhyme>,</l>
        <l id="s2:l10" met="4" type="-+">Gy waert de Hel een groote <rhyme label="d" type="m">beedt</rhyme>,</l>
        <l id="s2:l11" met="4" type="+-">Die soo de Doodt de doodt <rhyme label="d" type="m" corresp="#s2:l10">aendeedt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Uw Lichaem was gebroght ter <rhyme label="a" type="m">doodt</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Maer uwe Siel gingh vlijtigh <rhyme label="b" type="m">voort</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Nae 't diepsten van der <rhyme label="a" type="m" corresp="#s3:l1">Aerden-kloot</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">En preekten daer soo blijden <rhyme label="b" type="m" corresp="#s3:l2">woort</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">De geesten die waren in <rhyme label="a" type="m" corresp="#s3:l1">noodt</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Gevangen in der Hellen <rhyme label="b" type="m" corresp="#s3:l2">boordt</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">Kom uyt, kom <rhyme label="c" type="m">uyt</rhyme>,</l>
        <l id="s3:l8" met="2" type="-+">Maek bly <rhyme label="c" type="m" corresp="#s3:l7">geluydt</rhyme>,</l>
        <l id="s3:l9" met="4" type="-+">Gy sult mijn sijn een vrije <rhyme label="c" type="m" corresp="#s3:l7">buyt</rhyme>,</l>
        <l id="s3:l10" met="4" type="-+">Al die betrouwt en hoopt in <rhyme label="d" type="m">mijn</rhyme>,</l>
        <l id="s3:l11" met="4" type="+-">Die sal ik een verlichter <rhyme label="d" type="m" corresp="#s3:l10">sijn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Als Jonas op den derden <rhyme label="a" type="m">dagh</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Weerom gesmakt wierdt op het <rhyme label="b" type="m">Landt</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Men u ook mee' verresen <rhyme label="a" type="m" corresp="#s4:l1">sagh</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Vry ende vrank van des doods <rhyme label="b" type="m" corresp="#s4:l2">bandt</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Want die u niet vast houden <rhyme label="a" type="m" corresp="#s4:l1">magh</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Dus komt gy nu seer <rhyme label="b" type="m" corresp="#s4:l2">triumphant</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+"><rhyme label="c" type="m">Miraculeus</rhyme>,</l>
        <l id="s4:l8" met="2" type="-+">En <rhyme label="c" type="m" corresp="#s4:l7">glorieus</rhyme>,</l>
        <l id="s4:l9" met="4" type="-+">Na dat gy hadt verplet den <rhyme label="c" type="m" corresp="#s4:l7">Reus</rhyme>,</l>
        <l id="s4:l10" met="4" type="-+">Den Goliath, den Duyvel <rhyme label="d" type="m">fel</rhyme>,</l>
        <l id="s4:l11" met="4" type="+-">En vast gebonden in de <rhyme label="d" type="m" corresp="#s4:l10">Hel</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Dus komt gy met den <rhyme label="a" type="m">dageraet</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">En toont u aen de Vrouwen <rhyme label="b" type="m">goet</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Die uyt brandende <rhyme label="a" type="m" corresp="#s5:l1">charitaet</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Na't graf-steedt liepen met der <rhyme label="b" type="m" corresp="#s5:l2">spoet</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Om u te salven, 't was te <rhyme label="a" type="m" corresp="#s5:l1">laet</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Sy werden van d' Engels <rhyme label="b" type="m" corresp="#s5:l2">gegroet</rhyme>,</l>
        <l id="s5:l7" met="2" type="-+">Sy kreegen <rhyme label="c" type="m">daer</rhyme>,</l>
        <l id="s5:l8" met="2" type="-+">De blyde <rhyme label="c" type="m" corresp="#s5:l7">maer</rhyme>,</l>
        <l id="s5:l9" met="4" type="-+">Dat g' haest soudt sijn in 't <rhyme label="c" type="m" corresp="#s5:l7">openbaer</rhyme>,</l>
        <l id="s5:l10" met="4" type="-+">Want gy nu al verresen <rhyme label="d" type="m">waerdt</rhyme>,</l>
        <l id="s5:l11" met="4" type="+-">Als gy te vooren hadt <rhyme label="d" type="m" corresp="#s5:l10">verklaerdt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>24518</id>
    <date>
      <year-start>1476</year-start>
      <year-end>1500</year-end>
    </date>
    <tags>
      <tag standard-name="devoot lied" translation="devotional song">devoot lied</tag>
      <tag standard-name="klaaglied" translation="lamentation">klaaglied</tag>
    </tags>
    <melody>Het waren twee gespelen goed</melody>
    <categories>
      <category translation="emotions">emoties</category>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Addeu myn vroude addev <rhyme label="a" type="f">solaes</rhyme></l>
        <l id="s1:l2" met="4" type="-+">myn blyscap laet ick by v <rhyme label="b" type="m">staen</rhyme></l>
        <l id="s1:l3" met="4" type="-+">ic wyl mi in desen ternoey <rhyme label="a" type="f" corresp="#s1:l1">besluten</rhyme></l>
        <l id="s1:l4" met="4" type="-+">ter doeren des lidens byn ic in <rhyme label="b" type="m" corresp="#s1:l2">gegaen</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">In desen ternoey wil ic nv <rhyme label="a" type="f">stryden</rhyme></l>
        <l id="s2:l2" met="4" type="-+">ende volgen den banier dat voer my <rhyme label="b" type="m">gaet</rhyme></l>
        <l id="s2:l3" met="4" type="-+">mynen heren wil ic getrouwe <rhyme label="a" type="f" corresp="#s2:l1">wesen</rhyme></l>
        <l id="s2:l4" met="4" type="-+">ende gaent ynt casteel dat tegen my <rhyme label="b" type="m" corresp="#s2:l2">staet</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Dat casteel is my alsoe seer  en <rhyme label="a" type="f">tegen</rhyme></l>
        <l id="s3:l2" met="4" type="-+">daer ic mit willen byn <rhyme label="b" type="m">ingegaen</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Want liden en wil my niet <rhyme label="a" type="f" corresp="#s3:l1">begeuen</rhyme></l>
        <l id="s3:l4" met="4" type="-+">soe lange als ic dat leuen <rhyme label="b" type="m" corresp="#s3:l2">haen</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Och god ende onse vrouwe mach icket wal <rhyme label="a" type="f">clagen</rhyme></l>
        <l id="s4:l2" met="4" type="-+">synt dat ic jerst in dit leuen <rhyme label="b" type="m">quam</rhyme></l>
        <l id="s4:l3" met="4" type="-+">soe en drufte ic die wateren des rouwen niet <rhyme label="a" type="f" corresp="#s4:l1">haelen</rhyme></l>
        <l id="s4:l4" met="4" type="-+">wtter cysterne van <rhyme label="b" type="m" corresp="#s4:l2">bethlahem</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Och god ende och god wat is dit <rhyme label="a" type="f">leuen</rhyme></l>
        <l id="s5:l2" met="4" type="-+">daermen dus voel in lyden <rhyme label="b" type="m">moet</rhyme></l>
        <l id="s5:l3" met="4" type="-+">en haddes god seluen niet <rhyme label="a" type="f" corresp="#s5:l1">gegeuen</rhyme></l>
        <l id="s5:l4" met="4" type="-+">ten waer te liden om geen <rhyme label="b" type="m" corresp="#s5:l2">guet</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Allen troest der creatueren is my <rhyme label="a" type="f">ontweken</rhyme></l>
        <l id="s6:l2" met="4" type="-+">dat clage ic god ende onser <rhyme label="b" type="m">vrouwen</rhyme></l>
        <l id="s6:l3" met="4" type="-+">ende alle solaes heeft my <rhyme label="a" type="f" corresp="#s6:l1">begeuen</rhyme></l>
        <l id="s6:l4" met="4" type="-+">mer liden en dede my nye <rhyme label="b" type="m" corresp="#s6:l2">ontrouwe</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Gheuangen byn ic in swaeren <rhyme label="a" type="f">verdriet</rhyme></l>
        <l id="s7:l2" met="4" type="-+">help ryker here god dat clage ic <rhyme label="b" type="m">di</rhyme></l>
        <l id="s7:l3" met="4" type="-+">ic weerde ghelaten aen allen <rhyme label="a" type="f" corresp="#s7:l1">syden</rhyme></l>
        <l id="s7:l4" met="4" type="-+">mer trouwelic staet my liden <rhyme label="b" type="m" corresp="#s7:l2">by</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Alle solaes der werlt heb ick <rhyme label="a" type="f">begeuen</rhyme></l>
        <l id="s8:l2" met="4" type="-+">ende hape daer groet loen af te <rhyme label="b" type="m">ontfaen</rhyme></l>
        <l id="s8:l3" met="4" type="-+">ende waenden voertaen in vreden te <rhyme label="a" type="f" corresp="#s8:l1">leuen</rhyme></l>
        <l id="s8:l4" met="4" type="-+">mer als my doncket is liden myn <rhyme label="b" type="m" corresp="#s8:l2">loen</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Och god die hem wal konde <rhyme label="a" type="f">geliden</rhyme></l>
        <l id="s9:l2" met="4" type="-+">waer dat lief of waer dat <rhyme label="b" type="m">leet</rhyme></l>
        <l id="s9:l3" met="4" type="-+">die solde hem nae wal seer   <rhyme label="a" type="f" corresp="#s9:l1">verblyden</rhyme></l>
        <l id="s9:l4" met="4" type="-+">als dat aen een steruen <rhyme label="b" type="m" corresp="#s9:l2">gaet</rhyme></l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">In druck waer oec wal troest <rhyme label="a" type="f">gelegen</rhyme></l>
        <l id="s10:l2" met="4" type="-+">die hem te rechte sueken <rhyme label="b" type="m">kan</rhyme></l>
        <l id="s10:l3" met="4" type="-+">dat most een constich meyster <rhyme label="a" type="f" corresp="#s10:l1">wesen</rhyme></l>
        <l id="s10:l4" met="4" type="-+">ende leggen alle syne vlyt daer <rhyme label="b" type="m" corresp="#s10:l2">aen</rhyme></l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Myt rechte moegen wy van desen liden wal <rhyme label="a" type="f">spreken</rhyme></l>
        <l id="s11:l2" met="4" type="-+">want wy twee gesellen <rhyme label="b" type="m">syn</rhyme></l>
        <l id="s11:l3" met="4" type="-+">als ick myns heren gades <rhyme label="a" type="f" corresp="#s11:l1">vergete</rhyme></l>
        <l id="s11:l4" met="4" type="-+">soe roepet my liden weder <rhyme label="b" type="m" corresp="#s11:l2">in</rhyme></l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Een ternoey is my van swaeren <rhyme label="a" type="f">verdriet</rhyme></l>
        <l id="s12:l2" met="4" type="-+">help ryker here god dat clage ic <rhyme label="b" type="m">di</rhyme></l>
        <l id="s12:l3" met="4" type="-+">heb ic troest of en heb ic en <rhyme label="a" type="f" corresp="#s12:l1">geen</rhyme></l>
        <l id="s12:l4" met="4" type="-+">ic moet my liden ende swygen al <rhyme label="b" type="m" corresp="#s12:l2">stylle</rhyme></l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Een ternoey te stryden en is my geen <rhyme label="a" type="f">spoel</rhyme></l>
        <l id="s13:l2" met="4" type="-+">dat claghe ic god myn <rhyme label="b" type="m">auentuer</rhyme></l>
        <l id="s13:l3" met="4" type="-+">geue hi my troest hi dede soe <rhyme label="a" type="f" corresp="#s13:l1">wel</rhyme></l>
        <l id="s13:l4" met="4" type="-+">want my dat leuen wort soe <rhyme label="b" type="m" corresp="#s13:l2">suer</rhyme></l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Als ic van desen ternoey hoer <rhyme label="a" type="f">spreken</rhyme></l>
        <l id="s14:l2" met="4" type="-+">van vresen doet my myn herte soe <rhyme label="b" type="m">wee</rhyme></l>
        <l id="s14:l3" met="4" type="-+">schilt ende  speer moet al te <rhyme label="a" type="f" corresp="#s14:l1">breken</rhyme></l>
        <l id="s14:l4" met="4" type="-+">die helm des vreden gaet al <rhyme label="b" type="m" corresp="#s14:l2">ontwee</rhyme></l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">O Maria der sundaren <rhyme label="a" type="f">troest</rhyme></l>
        <l id="s15:l2" met="4" type="-+">waer heeft ye rydder ternoey <rhyme label="b" type="m">gestreden</rhyme></l>
        <l id="s15:l3" met="4" type="-+">god seluen heeft hem daer wt <rhyme label="a" type="f" corresp="#s15:l1">verloest</rhyme></l>
        <l id="s15:l4" met="4" type="-+">mer druck ende liden is al myn <rhyme label="b" type="m" corresp="#s15:l2">troest</rhyme></l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Vremde byn ic in veren <rhyme label="a" type="f">lande</rhyme></l>
        <l id="s16:l2" met="4" type="-+">daer ic dus voel in liden <rhyme label="b" type="m">moet</rhyme></l>
        <l id="s16:l3" met="4" type="-+">ende ongetroest moet ic daer <rhyme label="a" type="f" corresp="#s16:l1">gaen</rhyme></l>
        <l id="s16:l4" met="4" type="-+">als een ellendich pelgrym <rhyme label="b" type="m" corresp="#s16:l2">doet</rhyme></l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Ick bloeyden als enen groenen <rhyme label="a" type="f">swych</rhyme></l>
        <l id="s17:l2" met="4" type="-+">doe my die grawe roc waert <rhyme label="b" type="m">aengedaen</rhyme></l>
        <l id="s17:l3" met="4" type="-+">och god ic moet verdorren eer <rhyme label="a" type="f" corresp="#s17:l1">tyt</rhyme></l>
        <l id="s17:l4" met="4" type="-+">want druck ende liden heeft my <rhyme label="b" type="m" corresp="#s17:l2">beuaen</rhyme></l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Ick mach der tortelduuen wal  <rhyme label="a" type="f">licken</rhyme></l>
        <l id="s18:l2" met="4" type="-+">die oren gaden verlaren <rhyme label="b" type="m">heeft</rhyme></l>
        <l id="s18:l3" met="4" type="-+">soe vlieget sy op enen dorren <rhyme label="a" type="f" corresp="#s18:l1">swych</rhyme></l>
        <l id="s18:l4" met="4" type="-+">ende si is truerich tot alre <rhyme label="b" type="m" corresp="#s18:l2">tyt</rhyme></l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">Ick bidde maria der moeder <rhyme label="a" type="f">gades</rhyme></l>
        <l id="s19:l2" met="4" type="-+">dat sy my helpe myt hoere <rhyme label="b" type="m">hant</rhyme></l>
        <l id="s19:l3" met="4" type="-+">dat ic in desen stryde <rhyme label="a" type="f" corresp="#s19:l1">volduere</rhyme></l>
        <l id="s19:l4" met="4" type="-+">want myne siele daer voer steet toe <rhyme label="b" type="m" corresp="#s19:l2">pande</rhyme></l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">Maria en wilt my niet <rhyme label="a" type="f">vergeten</rhyme></l>
        <l id="s20:l2" met="4" type="-+">aen v weerde vrouwe staet alle myn <rhyme label="b" type="m">troest</rhyme></l>
        <l id="s20:l3" met="4" type="-+">gy syt een steerne des meers <rhyme label="a" type="f" corresp="#s20:l1">geheyten</rhyme></l>
        <l id="s20:l4" met="4" type="-+">ghi hebter dit jaer soe mennyge <rhyme label="b" type="m" corresp="#s20:l2">verloest</rhyme></l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="4" type="-+">Weest vroeme ende wilt v niet <rhyme label="a" type="f">versagen</rhyme></l>
        <l id="s21:l2" met="4" type="-+">mer hebt altoes enen gueden <rhyme label="b" type="m">moet</rhyme></l>
        <l id="s21:l3" met="4" type="-+">soe mach ic my nae wal seer <rhyme label="a" type="f" corresp="#s21:l1">verblyden</rhyme></l>
        <l id="s21:l4" met="4" type="-+">alst hier aen een steruen <rhyme label="b" type="m" corresp="#s21:l2">gaet</rhyme></l>
      </lg>
      <lg id="s22" type="stanza">
        <l id="s22:l1" met="4" type="-+">Als dese joncfrouwe dus heeft <rhyme label="a" type="f">gestreden</rhyme></l>
        <l id="s22:l2" met="4" type="-+">ende wat sal dan daer wesen dat <rhyme label="b" type="m">loen</rhyme></l>
        <l id="s22:l3" met="4" type="-+">die blyscap des hemels mit allen <rhyme label="a" type="f" corresp="#s22:l1">hiligen</rhyme></l>
        <l id="s22:l4" met="4" type="-+">ende god sal seluen wesen hoer <rhyme label="b" type="m" corresp="#s22:l2">croen</rhyme></l>
      </lg>
    </lg>
  </text>
</song>

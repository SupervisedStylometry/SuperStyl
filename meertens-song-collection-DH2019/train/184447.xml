  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ORaad' my naar uw <rhyme label="a" type="f">herte</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Myn Jesus, Godes <rhyme label="b" type="m">Zoon</rhyme>!</l>
        <l id="s1:l3" met="3" type="-+">Draag ik hier kruis en <rhyme label="a" type="f" corresp="#s1:l1">smerte</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Wees Gy myn Schild en <rhyme label="b" type="m" corresp="#s1:l2">Loon</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Verberg my uit <rhyme label="c" type="f">genaade</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">In uwe ope <rhyme label="d" type="m">zyd'</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">En ruk m' uit allen <rhyme label="c" type="f" corresp="#s1:l5">schade</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">In uwe <rhyme label="d" type="m" corresp="#s1:l6">veiligheit</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">In mynes herten <rhyme label="a" type="f">gronde</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Uw Naam en Kruis <rhyme label="b" type="m">allein</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Vonk' alle tyd en <rhyme label="a" type="f" corresp="#s2:l1">stonde</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Zo kan ik vrolyk <rhyme label="b" type="m" corresp="#s2:l2">zyn</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Vertoon dat Beeld myn <rhyme label="c" type="f">herte</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Ten troost in al myn <rhyme label="d" type="m">nood</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Zo als g' aan 't kruis, vol <rhyme label="c" type="f" corresp="#s2:l5">smerte</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Voor my uw bloed <rhyme label="d" type="m" corresp="#s2:l6">vergoot</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Schryf met een nieuwen <rhyme label="a" type="f">Naame</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">m' In 't boek des leevens <rhyme label="b" type="m">in</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">En bind myn Ziele 't <rhyme label="a" type="f" corresp="#s3:l1">zamen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">In 't Bondeltje met <rhyme label="b" type="m" corresp="#s3:l2">hen</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Die u hun Heere <rhyme label="c" type="f">noemen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En van u zyn <rhyme label="d" type="m">bemint</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Zo zal ik eeuwig <rhyme label="c" type="f" corresp="#s3:l5">roemen</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Gy zyt myn trouwste <rhyme label="d" type="m" corresp="#s3:l6">Vrind</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">U heb ik <rhyme label="a" type="f">ingesloten</rhyme></l>
        <l id="s4:l2" met="3" type="-+">In 't hert, en ben zeer <rhyme label="b" type="m">bly</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Uw bloed hebt Gy <rhyme label="a" type="f" corresp="#s4:l1">vergoten</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Voor my, arm <rhyme label="b" type="m" corresp="#s4:l2">wormetje</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Verlost door zulk <rhyme label="c" type="f">erbarmen</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Van eeuwig' angst en <rhyme label="d" type="m">pyn</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Hoe kan 'er tot ons <rhyme label="c" type="f" corresp="#s4:l5">armen</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Nog grooter' Liefde <rhyme label="d" type="m" corresp="#s4:l6">zyn</rhyme>!</l>
      </lg>
    </lg>
  </text>
</song>

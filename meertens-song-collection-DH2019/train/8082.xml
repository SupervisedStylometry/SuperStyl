  <author>Jan Jansz. Deutel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">HOort, menschen een Nieuwe <rhyme label="a" type="m">Liedt</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Tot uwer liefden <rhyme label="b" type="f">singen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Versuymt u ziele doch <rhyme label="a" type="m" corresp="#s1:l1">niet</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Maer wilt met grooter <rhyme label="a" type="m" corresp="#s1:l1">vliet</rhyme></l>
        <l id="s1:l5" met="3" type="-+">door dâ€™enghe poorte <rhyme label="b" type="f" corresp="#s1:l2">dringen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Dese werelt is voor vele <rhyme label="a" type="m">gemaeckt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Maer de toecomende, <rhyme label="b" type="f">waerlijck</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Voor weynigh o menschen <rhyme label="a" type="m" corresp="#s2:l1">ontwaeckt</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">dat ghy dese reden wel <rhyme label="a" type="m" corresp="#s2:l1">smaeckt</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">de Engel sprack dit <rhyme label="b" type="f" corresp="#s2:l2">klaerlijck</rhyme>,</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">De werelt gaet grovelijck <rhyme label="a" type="m">mis</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Al van Gods waerheydt <rhyme label="b" type="f">verde</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">der gerechtigen wegh wort <rhyme label="a" type="m" corresp="#s3:l1">wis</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Gheacht voor <rhyme label="a" type="m" corresp="#s3:l1">verderffenis</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Sapientie leeft in 't <rhyme label="b" type="f" corresp="#s3:l2">derde</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Seer enge soo is de <rhyme label="a" type="m">poort</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">die daer leyt tot den <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Weynigh vinden dese, <rhyme label="a" type="m" corresp="#s4:l1">hoort</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">In den ruymen wegh gaeter veel <rhyme label="a" type="m" corresp="#s4:l1">voort</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Wy vinden 't klaer <rhyme label="b" type="f" corresp="#s4:l2">beschreven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">O menschen, maeckt u <rhyme label="a" type="m">afscheyt</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Wt de ruyme <rhyme label="b" type="f">passagie</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Want sy tot de verdoemenis <rhyme label="a" type="m" corresp="#s5:l1">leyt</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Op dat ghy niet eeuwigh en <rhyme label="a" type="m" corresp="#s5:l1">schreyt</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Werdt een Christen <rhyme label="b" type="f" corresp="#s5:l2">personagie</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ghy Christenen <rhyme label="a" type="m">algemeen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Strijdt vroom in deser <rhyme label="b" type="f">uren</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Wilt dat enghe padeken <rhyme label="a" type="m" corresp="#s6:l1">treen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Alst hier is deur <rhyme label="a" type="m" corresp="#s6:l1">ghestreen</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Soo sal de blijdtschap <rhyme label="b" type="f" corresp="#s6:l2">dueren</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">De rechtvaerdighe zielen <rhyme label="a" type="m">zijn</rhyme></l>
        <l id="s7:l2" met="3" type="-+">In de handen Godts, hoort <rhyme label="b" type="f">reden</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Het heeft voor den onwijsen een <rhyme label="a" type="m" corresp="#s7:l1">schijn</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Of sy storven, verstaet wel <rhyme label="a" type="m" corresp="#s7:l1">mijn</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Maer sy gaen heen in <rhyme label="b" type="f" corresp="#s7:l2">vreden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">In de werelt sult ghy hebben <rhyme label="a" type="m">druck</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Maer in vreden sult ghy <rhyme label="b" type="f">rusten</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Spreeckt Christus, verstaet wel dit <rhyme label="a" type="m" corresp="#s8:l1">stuck</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">dat is sijn volckx <rhyme label="a" type="m" corresp="#s8:l1">gheluck</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Nae 't lichaem gheen <rhyme label="b" type="f" corresp="#s8:l2">wellusten</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">De werelt sal haer <rhyme label="a" type="m">verblien</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Ghy sult weenen ende <rhyme label="b" type="f">schreyen</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Maer u droefheyt, wilt hier op <rhyme label="a" type="m" corresp="#s9:l1">sien</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Sal veranderen na Christus <rhyme label="a" type="m" corresp="#s9:l1">bedien</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">In blijdtschap, die 't <rhyme label="b" type="f" corresp="#s9:l2">verbeyen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Die vreught sal zijn boven <rhyme label="a" type="m">al</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Soo ons Christus houdt voor <rhyme label="b" type="f">oogen</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Hy sprack, aenhoort dit <rhyme label="a" type="m" corresp="#s10:l1">gheschal</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Dat niemant die blijschap en <rhyme label="a" type="m" corresp="#s10:l1">sal</rhyme></l>
        <l id="s10:l5" met="3" type="-+">Van haer nemen <rhyme label="b" type="f" corresp="#s10:l2">moghen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Hoe haest is het hier <rhyme label="a" type="m">gedaen</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Al datmen mach <rhyme label="b" type="f">aenschouwen</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Dat is tijd'lijck na Paulus <rhyme label="a" type="m" corresp="#s11:l1">vermaen</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Al dat tijd'lijck is moet <rhyme label="a" type="m" corresp="#s11:l1">vergaen</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Wilt u daer niet seer aen <rhyme label="b" type="f" corresp="#s11:l2">houwen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Werckt spijse, die niet en <rhyme label="a" type="m">vergaet</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Wilt in den Hemel schat <rhyme label="b" type="f">vergaren</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">doet Koopmanschap, of ghy 't niet <rhyme label="a" type="m" corresp="#s12:l1">besaet</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Nae dat onverganckelijcke <rhyme label="a" type="m" corresp="#s12:l1">staet</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">De werelt laet doch <rhyme label="b" type="f" corresp="#s12:l2">varen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Verblijdt u, nae Paulus <rhyme label="a" type="m">leer</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Anderwerf, wilt u <rhyme label="b" type="f">verblijden</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Ende dat al inne den <rhyme label="a" type="m" corresp="#s13:l1">Heer</rhyme>.</l>
        <l id="s13:l4" met="3" type="-+">Acht op dit woordeken <rhyme label="a" type="m" corresp="#s13:l1">seer</rhyme>,</l>
        <l id="s13:l5" met="3" type="-+">Wilt ydel glory <rhyme label="b" type="f" corresp="#s13:l2">mijden</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Nu, menschen, wie dat ghy <rhyme label="a" type="m">zijt</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Wilt op de Schriftuer <rhyme label="b" type="f">achten</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">De Heere sal komen <rhyme label="a" type="m" corresp="#s14:l1">subijt</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">Hebt u soo in desen <rhyme label="a" type="m" corresp="#s14:l1">tijdt</rhyme>,</l>
        <l id="s14:l5" met="3" type="-+">Dat ghy 't leven meught <rhyme label="b" type="f" corresp="#s14:l2">verwachten</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

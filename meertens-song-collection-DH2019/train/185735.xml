  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Iephta kloeck een strijdtbaer <rhyme label="a" type="m">Helt</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">En Gideon vroom lof <rhyme label="b" type="f">same</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Met Moyses hier by <rhyme label="a" type="m" corresp="#s1:l1">gestelt</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Leeren ons hier strijden in ‘t <rhyme label="a" type="m" corresp="#s1:l1">velt</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Met ‘s Geest wapenen <rhyme label="b" type="f" corresp="#s1:l2">eersame</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Daerom gy knechten van <rhyme label="a" type="m">Gideon</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Overluyt blaest u <rhyme label="b" type="f">Trompetten</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Tegen ‘s wereldts vyanden <rhyme label="a" type="m" corresp="#s2:l1">alom</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">En der booser slangen <rhyme label="a" type="m" corresp="#s2:l1">Trom</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Vw’ aerde Vaten wilt <rhyme label="b" type="f" corresp="#s2:l2">verpletten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">En vreest geensints den <rhyme label="a" type="m">Mediansie</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Al is Gideons macht <rhyme label="b" type="f">kleene</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Het sweert des Geest verwint <rhyme label="a" type="m" corresp="#s3:l1">subijt</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Al uw’ vyanden in ‘t aertsche <rhyme label="a" type="m" corresp="#s3:l1">krijt</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Die Godt hier acht seer <rhyme label="b" type="f" corresp="#s3:l2">kleene</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Met geloove wel <rhyme label="a" type="m">gepaeyt</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Soeckt altijdts te <rhyme label="b" type="f">beerven</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Die stadt daer Godts Baniere in <rhyme label="a" type="m" corresp="#s4:l1">waeyt</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Daer Godt van zijn saet heeft <rhyme label="a" type="m" corresp="#s4:l1">gesaeyt</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Sijn vruchten mocht <rhyme label="b" type="f" corresp="#s4:l2">verwerven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Onbevreest met goeden <rhyme label="a" type="m">vlijt</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Naer victorie doet <rhyme label="b" type="f">verlangen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Tot ruste als getrouwe <rhyme label="a" type="m" corresp="#s5:l1">Israelijt</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Soo wort gy van Christo <rhyme label="a" type="m" corresp="#s5:l1">gebenedijt</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">En in zijn ruste <rhyme label="b" type="f" corresp="#s5:l2">ontfangen</rhyme>.</l>
      </lg>
    </lg>
  </text>

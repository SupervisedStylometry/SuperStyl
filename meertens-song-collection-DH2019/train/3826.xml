    <melody>Geloofd zo zij de Heer zeer goed</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Hans de Ries</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">GHeloeft soo sy de Heere seer <rhyme label="a" type="f">goet</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Den Godt Israels vriendlijc en <rhyme label="a" type="f" corresp="#s1:l1">soet</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Hy heeft syn volleck wt <rhyme label="b" type="m">ghenaden</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Versocht, verlost ende <rhyme label="b" type="m" corresp="#s1:l3">ontladen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">† Hy heeft den horen der <rhyme label="a" type="f">salicheyt</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Seer vol ghenaden ende <rhyme label="a" type="f" corresp="#s2:l1">waerheyt</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Voortsghebracht ende oock <rhyme label="b" type="m">opgherecht</rhyme></l>
        <l id="s2:l4" met="4" type="-+">In dat huys van Dauid synen <rhyme label="b" type="m" corresp="#s2:l3">knecht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Also hy beloeft hadde <rhyme label="a" type="f">certeyn</rhyme></l>
        <l id="s3:l2" met="4" type="-+">* Door syn Propheten heylich en <rhyme label="a" type="f" corresp="#s3:l1">reyn</rhyme></l>
        <l id="s3:l3" met="4" type="-+">‡ Ons te verlossen wt de <rhyme label="b" type="m">handen</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Van onse haters en <rhyme label="b" type="m" corresp="#s3:l3">vyanden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Op dat hy toch <rhyme label="a" type="f">bermhertichede</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Al aen onse voorvadren <rhyme label="a" type="f" corresp="#s4:l1">dede</rhyme></l>
        <l id="s4:l3" met="4" type="-+">En syn verbont heylich en <rhyme label="b" type="m">clare</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Volbracht ende ghedachtich <rhyme label="b" type="m" corresp="#s4:l3">mare</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">† Te weten den eedt vast ende <rhyme label="a" type="f">sterck</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Die hy Abraham al in dit <rhyme label="a" type="f" corresp="#s5:l1">perck</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Onsen voor Vader heeft <rhyme label="b" type="m">ghesworen</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Diens gheslacht hy heeft <rhyme label="b" type="m" corresp="#s5:l3">vercoren</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Belouende ons al te <rhyme label="a" type="f">gheuen</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Verlost te zijn in desen <rhyme label="a" type="f" corresp="#s6:l1">leuen</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Van ons vyanden minst en <rhyme label="b" type="m">meest</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Om hem te dienen seer <rhyme label="b" type="m" corresp="#s6:l3">onbevreest</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Alle die tijt onses leuens <rhyme label="a" type="f">lanck</rhyme></l>
        <l id="s7:l2" met="4" type="-+">In heylicheyt reyn sonder <rhyme label="a" type="f" corresp="#s7:l1">bedwanck</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Ende gherechticheyt heerlijck <rhyme label="b" type="m">fris</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Die Godt den Heer behaghelijck <rhyme label="b" type="m" corresp="#s7:l3">is</rhyme>.</l>
      </lg>
    </lg>
  </text>

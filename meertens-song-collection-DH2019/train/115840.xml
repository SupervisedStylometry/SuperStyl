    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Schoon de boomen en velden <rhyme label="a" type="m">staan</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Zonder vreugt, met ryp en met sneeuw zyn <rhyme label="a" type="m" corresp="#s1:l1">belaân</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">En den Amstel bevrozen <rhyme label="b" type="m">is</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Laat ons evenwel zyn vrolyk en <rhyme label="b" type="m" corresp="#s1:l3">fris</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Zou 't vernoegen, Zou 't <rhyme label="c" type="f">vernoegen</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">daarom juist by de jonkheid niet <rhyme label="d" type="m">zyn</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Noch keeren de <rhyme label="e" type="f">jaaren</rhyme>,</l>
        <l id="s1:l8" met="2" type="-+">De bloemen en <rhyme label="e" type="f" corresp="#s1:l7">blaâren</rhyme>,</l>
        <l id="s1:l9" met="4" type="-+">Maar oudheid vergaat doch in droefheid en <rhyme label="d" type="m" corresp="#s1:l6">pyn</rhyme>.</l>
      </lg>
    </lg>

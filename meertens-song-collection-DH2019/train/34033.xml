  <author>Jacob Rosant</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">OP d'eersten Sabbath, 's avonts <rhyme label="a" type="m">laet</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Waren de Jongeren te <rhyme label="b" type="f">gare</rhyme>;</l>
        <l id="s1:l3" met="4" type="-+">Heer Iesus in het midden <rhyme label="a" type="m" corresp="#s1:l1">staet</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">En komt hem haer <rhyme label="b" type="f" corresp="#s1:l2">veropenbare</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">De deuren waren toe <rhyme label="a" type="m">gedaen</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Dat sy uyt vrees der Jooden <rhyme label="b" type="f">deede</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Noghtans quam hy in 't midden <rhyme label="a" type="m" corresp="#s2:l1">staen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">En seyde, ik wensch u-lie <rhyme label="b" type="f" corresp="#s2:l2">vreede</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">En als hy dat gesprooken <rhyme label="a" type="m">hadt</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Toond' hy sijn handen, ende <rhyme label="b" type="f">sijde</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Als de Discipels sagen, <rhyme label="a" type="m" corresp="#s3:l1">dat</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Het Iesus was, waren sy <rhyme label="b" type="f" corresp="#s3:l2">blijde</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Dus seyde hy weerom tot <rhyme label="a" type="m">haer</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">De vreede ik u t' samen <rhyme label="b" type="f">biede</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Gelijk als ik van mijnen <rhyme label="a" type="m" corresp="#s4:l1">VaÃªr</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Gesonden ben, send ik <rhyme label="b" type="f" corresp="#s4:l2">u-liede</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Hy blies op haer, seydt, wilt <rhyme label="a" type="m">ontfaen</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Den Heyl'gen Geest, op dat de <rhyme label="b" type="f">sonden</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Die gy ontbint, sijn los <rhyme label="a" type="m" corresp="#s5:l1">gedaen</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">En die gy bindt, blijven <rhyme label="b" type="f" corresp="#s5:l2">gebonden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Maer Thomas, een van haer <rhyme label="a" type="m">getal</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">En was daer niet by op die <rhyme label="b" type="f">keere</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Daer om sy seyden tot hem <rhyme label="a" type="m" corresp="#s6:l1">al</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Wy hebben t'saem gesien den <rhyme label="b" type="f" corresp="#s6:l2">Heere</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Hy seydt, indien ik niet <rhyme label="a" type="m">aenschouw</rhyme></l>
        <l id="s7:l2" met="4" type="-+">In sijne handen spijkers <rhyme label="b" type="f">klooven</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">En mijn handt in sijn sijde <rhyme label="a" type="m" corresp="#s7:l1">houw</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Soo en sal ik geensints <rhyme label="b" type="f" corresp="#s7:l2">gelooven</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">En nae aght dagen waren <rhyme label="a" type="m">sy</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Weerom te samen, Thomas <rhyme label="b" type="f">meede</rhyme>.</l>
        <l id="s8:l3" met="4" type="-+">En Iesus quam haer weerom <rhyme label="a" type="m" corresp="#s8:l1">by</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">En seyd' tot haer, ik wensch u <rhyme label="b" type="f" corresp="#s8:l2">vreede</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">En daer na hy tot Thomas <rhyme label="a" type="m">spreekt</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Uw vinger brenght hier in dees <rhyme label="b" type="f">kloove</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Uw handt in mijne sijde <rhyme label="a" type="m" corresp="#s9:l1">steekt</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">En blijft niet in uw <rhyme label="b" type="f" corresp="#s9:l2">ongeloove</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">En Thomas heft op sijne <rhyme label="a" type="m">stem</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Mijn Heer, mijn Godt! seydt met <rhyme label="b" type="f">beweegen</rhyme>.</l>
        <l id="s10:l3" met="4" type="-+">En Iesus antwoort weer tot <rhyme label="a" type="m" corresp="#s10:l1">hem</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Met sien hebt gy 't geloof <rhyme label="b" type="f" corresp="#s10:l2">gekreegen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Maer saligh sijn die niet en <rhyme label="a" type="m">sien</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">En evenwel 't geloof <rhyme label="b" type="f">aenvangen</rhyme>.</l>
        <l id="s11:l3" met="4" type="-+">Die magh door Iesus naem <rhyme label="a" type="m" corresp="#s11:l1">geschien</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Het eeuwigh leeven te <rhyme label="b" type="f" corresp="#s11:l2">ontfangen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">O Iesu, die bent van der <rhyme label="a" type="m">doodt</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Door uwe eygen kraght <rhyme label="b" type="f">verresen</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Geeft ons, uyt onser sonden <rhyme label="a" type="m" corresp="#s12:l1">noodt</rhyme></l>
        <l id="s12:l4" met="4" type="-+">Door uwe Naem verlost te <rhyme label="b" type="f" corresp="#s12:l2">weesen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

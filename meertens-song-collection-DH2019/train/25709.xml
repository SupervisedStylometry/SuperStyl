      <category translation="formal genres">formele genres</category>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Leenaert Clock</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Tot u roep ick, o Schepper <rhyme label="a" type="m">mijn</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Toont my u lieffelijck <rhyme label="a" type="m" corresp="#s1:l1">aenschijn</rhyme></l>
        <l id="s1:l3" met="2" type="-+">In mijn <rhyme label="b" type="m">gheclach</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Wilt doch mijn stem <rhyme label="c" type="f">verhooren</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Ghy Godt die my wel helpen <rhyme label="b" type="m" corresp="#s1:l3">mach</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ziet my aen met <rhyme label="a" type="m">barmherticheyt</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Ghy kent ick bent maecksel <rhyme label="a" type="m" corresp="#s2:l1">bereyt</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Door uwe <rhyme label="b" type="m">handt</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Heb ick het gheen <rhyme label="c" type="f">ontfanghen</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Daer met ick ben int aerdtsche <rhyme label="b" type="m" corresp="#s2:l3">Landt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Zeer onvolmaeckt, doch <rhyme label="a" type="m">aldermeest</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Aen Ziele, Lichaem ende <rhyme label="a" type="m" corresp="#s3:l1">Gheest</rhyme></l>
        <l id="s3:l3" met="2" type="-+">Ben ick <rhyme label="b" type="m">beswaert</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Een nieuwe <rhyme label="c" type="f">creatuere</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Schept in my heel Godlijck <rhyme label="b" type="m" corresp="#s3:l3">gheaert</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Kenlijck maeckt my dat ick <rhyme label="a" type="m">betracht</rhyme></l>
        <l id="s4:l2" met="4" type="-+">V Godtlijck wesen dach en <rhyme label="a" type="m" corresp="#s4:l1">nacht</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">En kennen <rhyme label="b" type="m">leer</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Al dat ick sal <rhyme label="c" type="f">volbringhen</rhyme></l>
        <l id="s4:l5" met="4" type="-+">O Heere Godt nae u <rhyme label="b" type="m" corresp="#s4:l3">begheer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">En soo sal ick bevinden <rhyme label="a" type="m">slecht</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Dat ghy barmhertich en <rhyme label="a" type="m" corresp="#s5:l1">gherecht</rhyme></l>
        <l id="s5:l3" met="2" type="-+">Nu zijt <rhyme label="b" type="m">voorwaer</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Van’t quaet sal ick my <rhyme label="c" type="f">wachten</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Tot goet doen my schicken <rhyme label="b" type="m" corresp="#s5:l3">eerbaer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Tot dat ick crijghe t’recht <rhyme label="a" type="m">verstandt</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Dat Christus Iesus mijn <rhyme label="a" type="m" corresp="#s6:l1">Heylandt</rhyme></l>
        <l id="s6:l3" met="2" type="-+">Nu is <rhyme label="b" type="m">heylsaem</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">En mijn zond’ wort <rhyme label="c" type="f">vergheven</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Alleen door sijnen heylgen <rhyme label="b" type="m" corresp="#s6:l3">Naem</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">En dat oock alle zonden <rhyme label="a" type="m">mijn</rhyme></l>
        <l id="s7:l2" met="4" type="-+">In Christi doot begraven <rhyme label="a" type="m" corresp="#s7:l1">zijn</rhyme>,</l>
        <l id="s7:l3" met="2" type="-+">Ick sal <rhyme label="b" type="m">opstaen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Wt desen doodt der <rhyme label="c" type="f">zonden</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">In een heylich nieu leven <rhyme label="b" type="m" corresp="#s7:l3">gaen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Ya ick sal in dit wilt <rhyme label="a" type="m">foreest</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Vercrijghen uwen goeden <rhyme label="a" type="m" corresp="#s8:l1">Gheest</rhyme></l>
        <l id="s8:l3" met="2" type="-+">T’eenen <rhyme label="b" type="m">Leydsman</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Die my in alle <rhyme label="c" type="f">waerheyt</rhyme></l>
        <l id="s8:l5" met="4" type="-+">Soo voortaen sal gheleyden <rhyme label="b" type="m" corresp="#s8:l3">dan</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">En maken mijnen wil <rhyme label="a" type="m">bereyt</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Te doen uwe <rhyme label="a" type="m" corresp="#s9:l1">gherechticheyt</rhyme>,</l>
        <l id="s9:l3" met="2" type="-+">Soo’t u <rhyme label="b" type="m">behaeght</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Hier toe wilt my <rhyme label="c" type="f">begaven</rhyme></l>
        <l id="s9:l5" met="4" type="-+">O lieve Heer uwe <rhyme label="b" type="m" corresp="#s9:l3">Dienstmaeght</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Dochter Syons als ghy dit <rhyme label="a" type="m">singt</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Den sin daer van te recht <rhyme label="a" type="m" corresp="#s10:l1">bedinckt</rhyme></l>
        <l id="s10:l3" met="2" type="-+">Tot aller <rhyme label="b" type="m">stondt</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Ick wensch u Gods <rhyme label="c" type="f">ghenade</rhyme></l>
        <l id="s10:l5" met="4" type="-+">Lieflijck uyt mijnes herten <rhyme label="b" type="m" corresp="#s10:l3">gront</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">WAt een groot jolijt t' <rhyme label="a" type="f">aenschouwen</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Op Thabor was 't den <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Doen hy had sijn ghebedt <rhyme label="a" type="f" corresp="#s1:l1">ghehouwen</rhyme>,</l>
        <l id="s1:l4" met="2" type="+-">Die soo <rhyme label="b" type="m" corresp="#s1:l2">seer</rhyme></l>
        <l id="s1:l5" met="4" type="+-">Sijn ghedaente heeft <rhyme label="c" type="m">verkeert</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Die met glorie seer <rhyme label="c" type="m" corresp="#s1:l5">vereert</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Als een Son 'taenschijn <rhyme label="a" type="f">ghebloncken</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Heeft hem door hemelsch <rhyme label="b" type="m">licht</rhyme>;</l>
        <l id="s2:l3" met="4" type="+-">Sijn discipelen werden <rhyme label="a" type="f" corresp="#s2:l1">droncken</rhyme></l>
        <l id="s2:l4" met="2" type="+-">Door 't <rhyme label="b" type="m" corresp="#s2:l2">ghesicht</rhyme>:</l>
        <l id="s2:l5" met="4" type="+-">Wit als sneeuw was sijnen <rhyme label="c" type="m">rock</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Waer des lichaems glans door <rhyme label="c" type="m" corresp="#s2:l5">trock</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Moyses en Elias <rhyme label="a" type="f">quamen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Sich voeghen by den <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Spraecken daer van sijn lijden 't <rhyme label="a" type="f" corresp="#s3:l1">samen</rhyme>,</l>
        <l id="s3:l4" met="2" type="+-">Groot te <rhyme label="b" type="m" corresp="#s3:l2">seer</rhyme>:</l>
        <l id="s3:l5" met="4" type="+-">Petrus, door 'tghestrael <rhyme label="c" type="m">ontwaeckt</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Sprack tot Christum, heel <rhyme label="c" type="m" corresp="#s3:l5">vermaeckt</rhyme>,</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Laet ons hier dry tenten <rhyme label="a" type="f">maecken</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Heer, Voor u dry, dat <rhyme label="b" type="m">wy</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Die nae dit gheniet soo seer <rhyme label="a" type="f" corresp="#s4:l1">haecken</rhyme>,</l>
        <l id="s4:l4" met="2" type="+-">Met u <rhyme label="b" type="m" corresp="#s4:l2">bly</rhyme></l>
        <l id="s4:l5" met="4" type="+-">Blijven in u wesens <rhyme label="c" type="m">schijn</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Ah 't is hier te goet te <rhyme label="c" type="m" corresp="#s4:l5">zijn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Petrus was soo seer <rhyme label="a" type="f">verslonden</rhyme></l>
        <l id="s5:l2" met="3" type="-+">In dien blyen <rhyme label="b" type="m">tijt</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">In sijn sinnen gheheel <rhyme label="a" type="f" corresp="#s5:l1">ghebonden</rhyme></l>
        <l id="s5:l4" met="2" type="+-">Door 't <rhyme label="b" type="m" corresp="#s5:l2">jolijt</rhyme></l>
        <l id="s5:l5" met="4" type="+-">Wist niet wat hy sey den <rhyme label="c" type="m">Heer</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Die ghenoechde hem soo <rhyme label="c" type="m" corresp="#s5:l5">seer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Een claer wolck omringht hen <rhyme label="a" type="f">allen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Heeft doen, en seer <rhyme label="b" type="m">vervaert</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Zijn d' Apostels ter aerd' <rhyme label="a" type="f" corresp="#s6:l1">ghevallen</rhyme>,</l>
        <l id="s6:l4" met="2" type="+-">Doen <rhyme label="b" type="m" corresp="#s6:l2">verclaert</rhyme></l>
        <l id="s6:l5" met="4" type="+-">Van den Vader wert den <rhyme label="c" type="m">Heer</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Voor den Son, ghelijck in <rhyme label="c" type="m" corresp="#s6:l5">eer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Hy de op hen staen, die <rhyme label="a" type="f">saghen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Doen niet met allen <rhyme label="b" type="m">meer</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Daer ghebleven van seer <rhyme label="a" type="f" corresp="#s7:l1">verslaeghen</rhyme>:</l>
        <l id="s7:l4" met="2" type="+-">Doch den <rhyme label="b" type="m" corresp="#s7:l2">heer</rhyme></l>
        <l id="s7:l5" met="4" type="+-">Hiet hen hier te swijghen <rhyme label="c" type="m">van</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Tot sijn doodt aen alle <rhyme label="c" type="m" corresp="#s7:l5">man</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Kost een straeltjen soo <rhyme label="a" type="f">verheughen</rhyme>?</l>
        <l id="s8:l2" met="3" type="-+">Hoe in den hemel <rhyme label="b" type="m">sal</rhyme></l>
        <l id="s8:l3" met="4" type="+-">Heel sijn glorie 't ghemoedt <rhyme label="a" type="f" corresp="#s8:l1">vervreughen</rhyme>?</l>
        <l id="s8:l4" met="2" type="+-">Waer den <rhyme label="b" type="m" corresp="#s8:l2">Al</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">In sijn wesen aen claer <rhyme label="c" type="m">aenschouwt</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Soo ghehecht 't hert aen hem <rhyme label="c" type="m" corresp="#s8:l5">hout</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Iesv, die versterckt u <rhyme label="a" type="f">vrinden</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Hebt met dat schoon <rhyme label="b" type="m">ghesicht</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Laet ons by u ghenade <rhyme label="a" type="f" corresp="#s9:l1">vinden</rhyme>,</l>
        <l id="s9:l4" met="2" type="+-">Ons <rhyme label="b" type="m" corresp="#s9:l2">verlicht</rhyme>,</l>
        <l id="s9:l5" met="4" type="+-">Dat ons hert staegh op u <rhyme label="c" type="m">acht</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">Nae 't gheniet uws aenschijns <rhyme label="c" type="m" corresp="#s9:l5">tracht</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

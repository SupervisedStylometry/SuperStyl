  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Opperbouwheer! U <rhyme label="a" type="f">verëeren</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Is en blijft hier eerste <rhyme label="b" type="m">pligt</rhyme>;</l>
        <l id="s1:l3" met="4" type="+-">Tot des naasten nut <rhyme label="a" type="f" corresp="#s1:l1">verkeeren</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">'t Doel naar welk zich ieder <rhyme label="b" type="m" corresp="#s1:l2">richt</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">Deugd beöefenen, ondeugd <rhyme label="a" type="f" corresp="#s1:l1">weeren</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Onderwijst ons dit <rhyme label="b" type="m" corresp="#s1:l2">gesigt</rhyme>.</l>
        <l id="s1:l7" met="4" type="+-">Onderwijst ons dit <rhyme label="b" type="m" corresp="#s1:l2">gesigt</rhyme>.</l>
        <l id="s1:l8" met="4" type="+-">Onderwijst ons dit <rhyme label="b" type="m" corresp="#s1:l2">gesigt</rhyme>.</l>
        <l id="s1:l9" met="3" type="+-">Amen, amen, <rhyme label="c" type="f">amen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Vriendschaps-koorden <rhyme label="a" type="f">samenstrenglen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Is wat men elkaêr hier <rhyme label="b" type="m">leert</rhyme>;</l>
        <l id="s2:l3" met="4" type="+-">Onschuld, 't reine beeld der <rhyme label="a" type="f" corresp="#s2:l1">englen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Is hier 't beeld, door elk <rhyme label="b" type="m" corresp="#s2:l2">begeerd</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Broedren! wilt uw stemmen <rhyme label="a" type="f" corresp="#s2:l1">menglen</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Rede en deugd zijn hier <rhyme label="b" type="m" corresp="#s2:l2">verëerd</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Rede en deugd zijn hier <rhyme label="b" type="m" corresp="#s2:l2">verëerd</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Rede en deugd zijn hier <rhyme label="b" type="m" corresp="#s2:l2">verëerd</rhyme>,</l>
        <l id="s2:l9" met="3" type="+-">Amen, amen, <rhyme label="c" type="f">amen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Vreugdevolle <rhyme label="a" type="f">losgezangen</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Galmen deezen tempel <rhyme label="b" type="m">door</rhyme>;</l>
        <l id="s3:l3" met="4" type="+-">Feestmuzijk wordt hier <rhyme label="a" type="f" corresp="#s3:l1">vervangen</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Door het juigchend <rhyme label="b" type="m" corresp="#s3:l2">Broederchoor</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Yvrende voor elks <rhyme label="a" type="f" corresp="#s3:l1">belangen</rhyme>:</l>
        <l id="s3:l6" met="4" type="+-">Waereldburgerschap zit <rhyme label="b" type="m" corresp="#s3:l2">vóór</rhyme>.</l>
        <l id="s3:l7" met="4" type="+-">Waereldburgerschap zit <rhyme label="b" type="m" corresp="#s3:l2">vóór</rhyme>.</l>
        <l id="s3:l8" met="4" type="+-">Waereldburgerschap zit <rhyme label="b" type="m" corresp="#s3:l2">vóór</rhyme>.</l>
        <l id="s3:l9" met="3" type="+-">Amen, amen, <rhyme label="c" type="f">amen</rhyme>.</l>
      </lg>
    </lg>

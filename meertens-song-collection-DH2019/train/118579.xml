  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Laet de wereldt haer <rhyme label="a" type="f">vermaken</rhyme></l>
        <l id="s1:l2" met="4" type="+-">In haer kinderlijcke <rhyme label="a" type="f" corresp="#s1:l1">saken</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Wy begeren beter <rhyme label="b" type="m">vreugd</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Die Godt selfs ons heeft <rhyme label="c" type="f">geboden</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Vreugd, daer Iesus zijn <rhyme label="c" type="f" corresp="#s1:l4">genoden</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Selfs mee aen sijn Disch <rhyme label="d" type="m">verheugt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Ieder sal na blijdschap <rhyme label="a" type="f">talen</rhyme>;</l>
        <l id="s2:l2" met="4" type="+-">Maer daer s' is op 't meest te <rhyme label="a" type="f" corresp="#s2:l1">halen</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Komt een wereldts dwaes 'et <rhyme label="b" type="m">minst</rhyme>.</l>
        <l id="s2:l4" met="4" type="+-">Om veel winste sal hy <rhyme label="c" type="f">swoegen</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Maer de Godtsvrucht, vol <rhyme label="c" type="f" corresp="#s2:l4">genoegen</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Is de grootst' en beste <rhyme label="d" type="m">winst</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Recht doen, en Godtsalig <rhyme label="a" type="f">leven</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">En sich tot Godts werck <rhyme label="a" type="f" corresp="#s3:l1">begeven</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Is den vromen t'aller <rhyme label="b" type="m">tijdt</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Enckel blijdschap en <rhyme label="c" type="f">verquicking</rhyme>;</l>
        <l id="s3:l5" met="4" type="+-">Maer den bosen is 't <rhyme label="c" type="f" corresp="#s3:l4">verschricking</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">En een heimelijcke <rhyme label="d" type="m">spijt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Zijn de wulpsche niet <rhyme label="a" type="f">genegen</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Tot de kennis van Godts <rhyme label="a" type="f" corresp="#s4:l1">wegen</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Is sijn woord hen tot een <rhyme label="b" type="m">smaet</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Hebben sy 'er lust noch treck <rhyme label="c" type="f">toe</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Keeren sy 't van walg den neck <rhyme label="c" type="f" corresp="#s4:l4">toe</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Ons verheugt het metter <rhyme label="d" type="m">daet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Sou men niet van heyl'ge <rhyme label="a" type="f">dingen</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Hier beneen met blijdschap <rhyme label="a" type="f" corresp="#s5:l1">singen</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Daer selfs d'Eng'len, voor Godts <rhyme label="b" type="m">Troon</rhyme></l>
        <l id="s5:l4" met="4" type="+-">T'saem vergaert by duysent <rhyme label="c" type="f">troepen</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Heilig, Heilig, Heilig, <rhyme label="c" type="f" corresp="#s5:l4">roepen</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Dag en nacht al even <rhyme label="d" type="m">schoon</rhyme>?</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Wat sal oock aldaer, na <rhyme label="a" type="f">desen</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Anders ons genoegen <rhyme label="a" type="f" corresp="#s6:l1">wesen</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Dan te staen voor sijn <rhyme label="b" type="m">gesicht</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Hem te loven en te <rhyme label="c" type="f">prijsen</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Eeuwig eere te <rhyme label="c" type="f" corresp="#s6:l4">bewijsen</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">'t Licht t'aenschouwen in sijn <rhyme label="d" type="m">licht</rhyme>?</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Wie sal sich dan niet <rhyme label="a" type="f">verkloecken</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Om sijn vreugt alhier te <rhyme label="a" type="f" corresp="#s7:l1">soecken</rhyme></l>
        <l id="s7:l3" met="4" type="+-">In een werck, dat selfs <rhyme label="b" type="m">aldaer</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Onse vreugd en werck sal <rhyme label="c" type="f">blijven</rhyme>?</l>
        <l id="s7:l5" met="4" type="+-">Wech met ydel tijdt <rhyme label="c" type="f" corresp="#s7:l4">verdrijven</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">'t Geen men lang beklaegt hier <rhyme label="d" type="m">naer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Waer de tijd weerom te <rhyme label="a" type="f">halen</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Daer men s' in de helsche <rhyme label="a" type="f" corresp="#s8:l1">qualen</rhyme></l>
        <l id="s8:l3" met="4" type="+-">Steeds herwenscht, met groot <rhyme label="b" type="m">verdriet</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Niemant sou een uur <rhyme label="c" type="f">passeeren</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Dan om Godt daer in te <rhyme label="c" type="f" corresp="#s8:l4">eeren</rhyme>:</l>
        <l id="s8:l6" met="4" type="+-">Maer de na-klacht helpt daer <rhyme label="d" type="m">niet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Ons staet noch de loop-baen <rhyme label="a" type="f">open</rhyme>:</l>
        <l id="s9:l2" met="4" type="+-">Laet ons daerom wacker <rhyme label="a" type="f" corresp="#s9:l1">lopen</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Noit on-lustig, traeg of <rhyme label="b" type="m">moe</rhyme>.</l>
        <l id="s9:l4" met="4" type="+-">Denckt, de deure der <rhyme label="c" type="f">genade</rhyme></l>
        <l id="s9:l5" met="4" type="+-">Staet, met eeuw'ge schand' en <rhyme label="c" type="f" corresp="#s9:l4">schade</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">Voor veel duisenden al <rhyme label="d" type="m">toe</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Goed doene moet ons noit te vroeg <rhyme label="a" type="f">zijn</rhyme>.</l>
        <l id="s10:l2" met="4" type="+-">'t Moet ons heden al genoeg <rhyme label="a" type="f" corresp="#s10:l1">zijn</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Dat wy 's levens voor'ge <rhyme label="b" type="m">tijd</rhyme></l>
        <l id="s10:l4" met="4" type="+-">In veel ydelheyd en <rhyme label="c" type="f">weelden</rhyme>,</l>
        <l id="s10:l5" met="4" type="+-">Soo verspilde, en <rhyme label="c" type="f" corresp="#s10:l4">verspeelden</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">'t Geen ons nu tot schaemt <rhyme label="d" type="m">gedijdt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Laet ons tijds <rhyme label="a" type="f">gelegentheeden</rhyme></l>
        <l id="s11:l2" met="4" type="+-">Nu voortaen ter deugd <rhyme label="a" type="f" corresp="#s11:l1">besteeden</rhyme>.</l>
        <l id="s11:l3" met="4" type="+-">'t Is genaed' en gunst, dat <rhyme label="b" type="m">wy</rhyme></l>
        <l id="s11:l4" met="4" type="+-">Ons aldus in 't licht <rhyme label="c" type="f">verheugen</rhyme>,</l>
        <l id="s11:l5" met="4" type="+-">En by 't licht noch wand'len <rhyme label="c" type="f" corresp="#s11:l4">meugen</rhyme>,</l>
        <l id="s11:l6" met="4" type="+-">Eer 't rondom ons duister <rhyme label="d" type="m">zy</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Dat wy min aen 't sluim'ren <rhyme label="a" type="f">raken</rhyme>,</l>
        <l id="s12:l2" met="4" type="+-">Laet ons met malkander <rhyme label="a" type="f" corresp="#s12:l1">waken</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">En soo Iesus jock en <rhyme label="b" type="m">last</rhyme>.</l>
        <l id="s12:l4" met="4" type="+-">Na Godts wil en <rhyme label="c" type="f">welp-behagen</rhyme>,</l>
        <l id="s12:l5" met="4" type="+-">Met eenpaer'ge schouders <rhyme label="c" type="f" corresp="#s12:l4">dragen</rhyme>,</l>
        <l id="s12:l6" met="4" type="+-">Onbeweegelijck en <rhyme label="d" type="m">vast</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Soo wy, eensaem, ons <rhyme label="a" type="f">verquynen</rhyme>,</l>
        <l id="s13:l2" met="4" type="+-">Laet ons nu en dan <rhyme label="a" type="f" corresp="#s13:l1">verschijnen</rhyme></l>
        <l id="s13:l3" met="4" type="+-">Daer de vrome zijn <rhyme label="b" type="m">vergaert</rhyme>,</l>
        <l id="s13:l4" met="4" type="+-">En malkaar met Lofsang <rhyme label="c" type="f">stichten</rhyme>.</l>
        <l id="s13:l5" met="4" type="+-">'t Kan te wonderlick <rhyme label="c" type="f" corresp="#s13:l4">verlichten</rhyme>,</l>
        <l id="s13:l6" met="4" type="+-">Soo men daer sijn stem mee <rhyme label="d" type="m">paert</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">Onse werck, van Godt <rhyme label="a" type="f">gepresen</rhyme>,</l>
        <l id="s14:l2" met="4" type="+-">Sal by hem niet ydel <rhyme label="a" type="f" corresp="#s14:l1">wesen</rhyme>.</l>
        <l id="s14:l3" met="4" type="+-">Sekerlick daer is een <rhyme label="b" type="m">loon</rhyme>,</l>
        <l id="s14:l4" met="4" type="+-">Dien hy uit gena sal <rhyme label="c" type="f">geven</rhyme></l>
        <l id="s14:l5" met="4" type="+-">T'saem in dit en 't ander <rhyme label="c" type="f" corresp="#s14:l4">leven</rhyme>,</l>
        <l id="s14:l6" met="4" type="+-">Soo wy doen na sijn <rhyme label="d" type="m">geboon</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="+-">Die 't profijt niet aen en <rhyme label="a" type="f">mercken</rhyme>,</l>
        <l id="s15:l2" met="4" type="+-">Van haer stichtelijcke <rhyme label="a" type="f" corresp="#s15:l1">wercken</rhyme>,</l>
        <l id="s15:l3" met="4" type="+-">Doen se sonder lust en <rhyme label="b" type="m">moet</rhyme>;</l>
        <l id="s15:l4" met="4" type="+-">Maer het aengenaem <rhyme label="c" type="f">betrachten</rhyme></l>
        <l id="s15:l5" met="4" type="+-">Van den loon, dien wy <rhyme label="c" type="f" corresp="#s15:l4">verwachten</rhyme>,</l>
        <l id="s15:l6" met="4" type="+-">Maeckt ons alles licht en <rhyme label="d" type="m">soet</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="+-">Niemant kan hem iet <rhyme label="a" type="f">vergelden</rhyme>:</l>
        <l id="s16:l2" met="4" type="+-">Maer die dus sijn glori <rhyme label="a" type="f" corresp="#s16:l1">melden</rhyme>,</l>
        <l id="s16:l3" met="4" type="+-">Off'ren Gode waerlick <rhyme label="b" type="m">danck</rhyme>,</l>
        <l id="s16:l4" met="4" type="+-">Welck door Iesus aengenaem <rhyme label="c" type="f">is</rhyme>,</l>
        <l id="s16:l5" met="4" type="+-">Of men selve min bequaem <rhyme label="c" type="f" corresp="#s16:l4">is</rhyme></l>
        <l id="s16:l6" met="4" type="+-">Tot een weerd'ge lof en <rhyme label="d" type="m">sanck</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="+-">Wat's de tael der <rhyme label="a" type="f">hemel-geesten</rhyme></l>
        <l id="s17:l2" met="4" type="+-">En der Engelen ten <rhyme label="a" type="f" corresp="#s17:l1">meesten</rhyme>?</l>
        <l id="s17:l3" met="4" type="+-">Eer zy Godt in 't hoogste <rhyme label="b" type="m">Koor</rhyme>.</l>
        <l id="s17:l4" met="4" type="+-">Heilig. Heilig, Heilig, <rhyme label="c" type="f">singen</rhyme></l>
        <l id="s17:l5" met="4" type="+-">Al die daer sijn Throon <rhyme label="c" type="f" corresp="#s17:l4">omringen</rhyme>,</l>
        <l id="s17:l6" met="4" type="+-">Halleluja, na als <rhyme label="d" type="m">voor</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="+-">Iesus selfs heeft hier <rhyme label="a" type="f">beneden</rhyme></l>
        <l id="s18:l2" met="4" type="+-">Om geen dinck soo seer <rhyme label="a" type="f" corresp="#s18:l1">gebeden</rhyme>,</l>
        <l id="s18:l3" met="4" type="+-">Als om d'Eere van Godts <rhyme label="b" type="m">Naem</rhyme>,</l>
        <l id="s18:l4" met="4" type="+-">En beveelt het ons te <rhyme label="c" type="f">gader</rhyme>;</l>
        <l id="s18:l5" met="4" type="+-">Want hy eerd' oock selfs sijn <rhyme label="c" type="f" corresp="#s18:l4">Vader</rhyme></l>
        <l id="s18:l6" met="4" type="+-">Tot sijns levens lesten <rhyme label="d" type="m">aem</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="+-">Ia Godts eer en glori <rhyme label="a" type="f">singen</rhyme></l>
        <l id="s19:l2" met="4" type="+-">Selfs de redenlose <rhyme label="a" type="f" corresp="#s19:l1">dingen</rhyme>,</l>
        <l id="s19:l3" met="4" type="+-">En gaen all' ons hier in <rhyme label="b" type="m">voor</rhyme>.</l>
        <l id="s19:l4" met="4" type="+-">Soo veel schepsels, soo veel <rhyme label="c" type="f">monden</rhyme></l>
        <l id="s19:l5" met="4" type="+-">Zijn er, die Godts lof <rhyme label="c" type="f" corresp="#s19:l4">verkonden</rhyme></l>
        <l id="s19:l6" met="4" type="+-">Al de wereldt door en <rhyme label="d" type="m">door</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="+-">Sal 't dan niet van ons <rhyme label="a" type="f">geschieden</rhyme>,</l>
        <l id="s20:l2" met="4" type="+-">Ach! hoe sullen wy <rhyme label="a" type="f" corresp="#s20:l1">ontvlieden</rhyme>,</l>
        <l id="s20:l3" met="4" type="+-">Als ons in Godts <rhyme label="b" type="m">oordeel-dag</rhyme>,</l>
        <l id="s20:l4" met="4" type="+-">Welck vast nadert, dees' al <rhyme label="c" type="f">t'samen</rhyme></l>
        <l id="s20:l5" met="4" type="+-">Overtuigen en <rhyme label="c" type="f" corresp="#s20:l4">beschamen</rhyme>!</l>
        <l id="s20:l6" met="4" type="+-">Elck doe nu dan wat hy <rhyme label="d" type="m">mag</rhyme>/</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="4" type="+-">D'eer sal tot ons weder <rhyme label="a" type="f">keeren</rhyme>,</l>
        <l id="s21:l2" met="4" type="+-">Soo wy hem behoorlick <rhyme label="a" type="f" corresp="#s21:l1">eeren</rhyme>,</l>
        <l id="s21:l3" met="4" type="+-">Mits hem onse goet niet <rhyme label="b" type="m">raeckt</rhyme>,</l>
        <l id="s21:l4" met="4" type="+-">En wy hem met al ons' <rhyme label="c" type="f">singen</rhyme>,</l>
        <l id="s21:l5" met="4" type="+-">Loven, prijsen, niets toe <rhyme label="c" type="f" corresp="#s21:l4">bringen</rhyme>,</l>
        <l id="s21:l6" met="4" type="+-">Als in sich geheel <rhyme label="d" type="m">volmaeckt</rhyme>.</l>
      </lg>
      <lg id="s22" type="stanza">
        <l id="s22:l1" met="4" type="+-">Godt is als de Son in <rhyme label="a" type="f">luister</rhyme>,</l>
        <l id="s22:l2" met="4" type="+-">Die 't Veel-al bestraelt in 't <rhyme label="a" type="f" corresp="#s22:l1">duister</rhyme>,</l>
        <l id="s22:l3" met="4" type="+-">En van geene saeck <rhyme label="b" type="m">nochtans</rhyme></l>
        <l id="s22:l4" met="4" type="+-">Licht of luister hoeft <rhyme label="c" type="f">t'ontfangen</rhyme>.</l>
        <l id="s22:l5" met="4" type="+-">Ia sijn singend' Eng'le <rhyme label="c" type="f" corresp="#s22:l4">rangen</rhyme></l>
        <l id="s22:l6" met="4" type="+-">Krijgen soo van Hem haer <rhyme label="d" type="m">glans</rhyme>.</l>
      </lg>
      <lg id="s23" type="stanza">
        <l id="s23:l1" met="4" type="+-">Zijn wy eer- of <rhyme label="a" type="f">glori-suchtig</rhyme>,</l>
        <l id="s23:l2" met="4" type="+-">Hier, hier worden wy <rhyme label="a" type="f" corresp="#s23:l1">doorluchtig</rhyme>,</l>
        <l id="s23:l3" met="4" type="+-">Mits ons Godt verweerdigt <rhyme label="b" type="m">heeft</rhyme>,</l>
        <l id="s23:l4" met="4" type="+-">Dat met onse niet'ge <rhyme label="c" type="f">tongen</rhyme></l>
        <l id="s23:l5" met="4" type="+-">Wordt sijn groote lof <rhyme label="c" type="f" corresp="#s23:l4">gesongen</rhyme>,</l>
        <l id="s23:l6" met="4" type="+-">Die van eeuw tot eeuwe <rhyme label="d" type="m">leeft</rhyme>.</l>
      </lg>
      <lg id="s24" type="stanza">
        <l id="s24:l1" met="4" type="+-">Die Godt hier op aerden <rhyme label="a" type="f">loven</rhyme>,</l>
        <l id="s24:l2" met="4" type="+-">Sullen eeuwig Hem daer <rhyme label="a" type="f" corresp="#s24:l1">boven</rhyme>,</l>
        <l id="s24:l3" met="4" type="+-">In het hemelsch <rhyme label="b" type="m">Paradijs</rhyme>,</l>
        <l id="s24:l4" met="4" type="+-">Sonder moe te worden, <rhyme label="c" type="f">roemen</rhyme>.</l>
        <l id="s24:l5" met="4" type="+-">Met een lof hier niet te <rhyme label="c" type="f" corresp="#s24:l4">noemen</rhyme>,</l>
        <l id="s24:l6" met="4" type="+-">Op de soetste nieuwe <rhyme label="d" type="m">wijs</rhyme>.</l>
      </lg>
    </lg>
  </text>

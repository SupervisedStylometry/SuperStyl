    <tags/>
    <melody>Als ik maar een doek zag blinken</melody>
  <author>Joannes Stalpaert van der Wiele</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">WAer toe deze <rhyme label="a" type="f">Paepse</rhyme></l>
        <l id="s1:l2" met="4" type="+-">kuiren// VVaerom zonder <rhyme label="b" type="m">vleesch</rhyme></l>
        <l id="s1:l3" met="4" type="+-">geleeft? Schouwende de <rhyme label="a" type="f" corresp="#s1:l1">crea</rhyme>-</l>
        <l id="s1:l4" met="4" type="+-">kuiren// Die den Heer <rhyme label="b" type="m" corresp="#s1:l2">gescha</rhyme>-</l>
        <l id="s1:l5" met="4" type="+-">pen heeft// Js dit dan de doo-ling <rhyme label="c" type="m">niet</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Die men Paulum dommen <rhyme label="c" type="m" corresp="#s1:l5">ziet</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Lieve broeder! geen ding <rhyme label="a" type="f">minder</rhyme>.</l>
        <l id="s2:l2" met="4" type="+-">Al wat Godes milde <rhyme label="b" type="m">hand</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Schiep, is rein, en zonder <rhyme label="a" type="f" corresp="#s2:l1">hinder</rhyme>.</l>
        <l id="s2:l4" met="4" type="+-">Maer ’t voorzeyde <rhyme label="b" type="m" corresp="#s2:l2">misverstand</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Is de vlouk die <rhyme label="c" type="m">Marcion</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Tegens Godes schepping <rhyme label="c" type="m" corresp="#s2:l5">von</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Vlouk vol lasters, en <rhyme label="a" type="f">misdaden</rhyme>.</l>
        <l id="s3:l2" met="4" type="+-">Namentlijk dat vleisch en <rhyme label="b" type="m">wijn</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Waren schepsels vanden <rhyme label="a" type="f" corresp="#s3:l1">quaden</rhyme>.</l>
        <l id="s3:l4" met="4" type="+-">Drake gal, en hels <rhyme label="b" type="m" corresp="#s3:l2">fenijn</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Zoo dat zich van zulken <rhyme label="c" type="m">kost</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Ider een onthouden <rhyme label="c" type="m" corresp="#s3:l5">most</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Wat heeft deze <rhyme label="a" type="f">ketterije</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Lieve, nu met ons <rhyme label="b" type="m">gemeens</rhyme>?</l>
        <l id="s4:l3" met="4" type="+-">Zy onbeerden t’allen <rhyme label="a" type="f" corresp="#s4:l1">tijen</rhyme>:</l>
        <l id="s4:l4" met="4" type="+-">Wy zoo, nu zoo, dan maer <rhyme label="b" type="m" corresp="#s4:l2">eens</rhyme>;</l>
        <l id="s4:l5" met="4" type="+-">Zy door <rhyme label="c" type="m">ongelovigheid</rhyme>;</l>
        <l id="s4:l6" met="4" type="+-">Wy uit deugd van <rhyme label="c" type="m" corresp="#s4:l5">soberheyd</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Of zalt hem Heer Iesus <rhyme label="a" type="f">belgen</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Dat wy altijd even <rhyme label="b" type="m">zeer</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Niet en schrokken, niet en <rhyme label="a" type="f" corresp="#s5:l1">swelgen</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Niet en soppen smout en <rhyme label="b" type="m" corresp="#s5:l2">smeer</rhyme>!</l>
        <l id="s5:l5" met="4" type="+-">Nee, fijn man! en hebt geen <rhyme label="c" type="m">sorg</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Weest gerust, ik blijf uw’ <rhyme label="c" type="m" corresp="#s5:l5">borg</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">’t Vougt wel datmen inde <rhyme label="a" type="f">schuttel</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Van een wel beleefde <rhyme label="b" type="m">waerd</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Uit beleeftheyd ook een <rhyme label="a" type="f" corresp="#s6:l1">luttel</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Vande milde maeltijd <rhyme label="b" type="m" corresp="#s6:l2">spaerd</rhyme>.</l>
        <l id="s6:l5" met="4" type="+-">End’ het gansche iaer <rhyme label="c" type="m">geteerdt</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Onder wijlen wat <rhyme label="c" type="m" corresp="#s6:l5">onbeerdt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Wilje dit nu byde <rhyme label="a" type="f">lieden</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Schelden voor een <rhyme label="b" type="m">kettery</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Dommen voor een spijs <rhyme label="a" type="f" corresp="#s7:l1">verbieden</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Zoo laet Daenjel immers <rhyme label="b" type="m" corresp="#s7:l2">vry</rhyme>.</l>
        <l id="s7:l5" met="4" type="+-">Die drie weken lang, zoo’k <rhyme label="c" type="m">lees</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Hem onthiel van wijn en <rhyme label="c" type="m" corresp="#s7:l5">vlees</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">En wie zou den <rhyme label="a" type="f">Rechabiten</rhyme></l>
        <l id="s8:l2" met="4" type="+-">(Al waer hy noch eens zoo <rhyme label="b" type="m">fijn</rhyme>)</l>
        <l id="s8:l3" met="4" type="+-">Durven valsche Leer <rhyme label="a" type="f" corresp="#s8:l1">verwijten</rhyme></l>
        <l id="s8:l4" met="4" type="+-">Over haer verboden <rhyme label="b" type="m" corresp="#s8:l2">wijn</rhyme>?</l>
        <l id="s8:l5" met="4" type="+-">Niemand zeker; want den <rhyme label="c" type="m">Heer</rhyme></l>
        <l id="s8:l6" met="4" type="+-">Prijst hen hier in al te <rhyme label="c" type="m" corresp="#s8:l5">zeer</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Zal de Kerk dan niet <rhyme label="a" type="f">vermeugen</rhyme></l>
        <l id="s9:l2" met="4" type="+-">Om de eer van Christus <rhyme label="b" type="m">kruis</rhyme>;</l>
        <l id="s9:l3" met="4" type="+-">’t Geen doen houden, ’t geen doen <rhyme label="a" type="f" corresp="#s9:l1">heugen</rhyme></l>
        <l id="s9:l4" met="4" type="+-">Kan een vader van een <rhyme label="b" type="m" corresp="#s9:l2">huis</rhyme>?</l>
        <l id="s9:l5" met="4" type="+-">Buiten twijfel. Des ik <rhyme label="c" type="m">vast</rhyme></l>
        <l id="s9:l6" met="4" type="+-">Zoo ’t de Kerk my heeft <rhyme label="c" type="m" corresp="#s9:l5">belast</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Wilje haer gebod niet <rhyme label="a" type="f">volgen</rhyme>,</l>
        <l id="s10:l2" met="4" type="+-">Zoo’n toondt u te minsten <rhyme label="b" type="m">niet</rhyme></l>
        <l id="s10:l3" met="4" type="+-">Onverduldig, en <rhyme label="a" type="f" corresp="#s10:l1">verbolgen</rhyme></l>
        <l id="s10:l4" met="4" type="+-">Op hen die ghy’t volgen <rhyme label="b" type="m" corresp="#s10:l2">ziet</rhyme>.</l>
        <l id="s10:l5" met="4" type="+-">Iae eet om uws Broeders <rhyme label="c" type="m">peis</rhyme></l>
        <l id="s10:l6" met="4" type="+-">Liever noit uw’ leven <rhyme label="c" type="m" corresp="#s10:l5">vleis</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

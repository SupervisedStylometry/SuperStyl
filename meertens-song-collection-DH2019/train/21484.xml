    <melody>Naar oostland wil ik varen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ICk hoorde de basuyne <rhyme label="a" type="f">blasen</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Seer verre hoorde ick <rhyme label="b" type="m">tgheschal</rhyme></l>
        <l id="s1:l3" met="4" type="-+">In Ierusalem in Edom <rhyme label="a" type="f" corresp="#s1:l1">basen</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Die boden roepen ouer <rhyme label="b" type="m" corresp="#s1:l2">al</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Haer gheluyt gaet in mijn <rhyme label="c" type="f">versinnen</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Maect v ter bruyloft <rhyme label="d" type="m">ghereet</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Al die den Coninck <rhyme label="c" type="f" corresp="#s1:l5">beminnen</rhyme></l>
        <l id="s1:l8" met="3" type="-+">De poorte is open gaet <rhyme label="c" type="f" corresp="#s1:l5">binnen</rhyme></l>
        <l id="s1:l9" met="4" type="-+">Uerciert v doet aen dat bruyloft <rhyme label="d" type="m" corresp="#s1:l6">cleet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">O Syon <rhyme label="a" type="f">wtghelesen</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Hebt ghy haer stemme niet <rhyme label="b" type="m">ghehoort</rhyme></l>
        <l id="s2:l3" met="4" type="-+">En wilt niet omhoorich <rhyme label="a" type="f" corresp="#s2:l1">wesen</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Maer wilt ontfanghen des Heeren <rhyme label="b" type="m" corresp="#s2:l2">woort</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Ghy hebt ghenade <rhyme label="c" type="f">ghecreghen</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Neemt waer het wort v <rhyme label="d" type="m">gheseyt</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Rasch maect v op die <rhyme label="c" type="f" corresp="#s2:l5">weghen</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Eer ghy met Babylon wort <rhyme label="c" type="f" corresp="#s2:l5">ghesleghen</rhyme></l>
        <l id="s2:l9" met="4" type="-+">Haest v seere niet en <rhyme label="d" type="m" corresp="#s2:l6">verbeyt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Dat teecken wort v <rhyme label="a" type="f">ghegheuen</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Dat Ezechiel int neghenste <rhyme label="b" type="m">staet</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Des heeren knechten worden <rhyme label="a" type="f" corresp="#s3:l1">beschreuen</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Die daer volbrenghen des Heeren <rhyme label="b" type="m" corresp="#s3:l2">raet</rhyme></l>
        <l id="s3:l5" met="4" type="-+">O Syon besiet uwen <rhyme label="c" type="f">verclaren</rhyme></l>
        <l id="s3:l6" met="3" type="-+">U ghetal is schier <rhyme label="d" type="m">veruult</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Uan die haer leuen niet en <rhyme label="c" type="f" corresp="#s3:l5">sparen</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Ghecocht zijn sy vander <rhyme label="c" type="f" corresp="#s3:l5">eerden</rhyme></l>
        <l id="s3:l9" met="4" type="-+">Tlam heeft betaelt voor haer de <rhyme label="d" type="m" corresp="#s3:l6">schult</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">O ghy Iacobs wormkens <rhyme label="a" type="f">wtuercoren</rhyme></l>
        <l id="s4:l2" met="4" type="-+">U vergulden ros coemt nv met <rhyme label="b" type="m">macht</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Wilt nv v hooft op <rhyme label="a" type="f" corresp="#s4:l1">voeren</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Dat ghy des Heeren toecoemst <rhyme label="b" type="m" corresp="#s4:l2">verwacht</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Wat wilt ghy een ander <rhyme label="c" type="f">aenuanghen</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Of ghy den Coninck niet crijghen en <rhyme label="d" type="m">sout</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Dat wee heeft v <rhyme label="c" type="f" corresp="#s4:l5">beuanghen</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Hieromme is v <rhyme label="c" type="f" corresp="#s4:l5">verlanghen</rhyme></l>
        <l id="s4:l9" met="4" type="-+">Als een vrou int baren <rhyme label="d" type="m" corresp="#s4:l6">menichfout</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Staet op Syon wapent v <rhyme label="a" type="f">leden</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Maect v totten strijde <rhyme label="b" type="m">bereyt</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Eenen anderen wech moet ghy in <rhyme label="a" type="f" corresp="#s5:l1">treden</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Maer eens menschen voetstappe <rhyme label="b" type="m" corresp="#s5:l2">breyt</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Haren inganck licht in mijn <rhyme label="c" type="f">vermeeren</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Daer ghy v erfdeel sult <rhyme label="d" type="m">ontfaen</rhyme></l>
        <l id="s5:l7" met="3" type="-+">En vreest niet al zijt ghy <rhyme label="c" type="f" corresp="#s5:l5">teedere</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Uoor den Arent met syne <rhyme label="c" type="f" corresp="#s5:l5">vederen</rhyme></l>
        <l id="s5:l9" met="4" type="-+">Hy sal v met zijn clauwen <rhyme label="d" type="m" corresp="#s5:l6">slaen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Den draeck is comen opder <rhyme label="a" type="f">aerde</rhyme></l>
        <l id="s6:l2" met="4" type="-+">En is gheuanghen met grooten <rhyme label="b" type="m">nijt</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Want die vrouwe diet manneken <rhyme label="a" type="f" corresp="#s6:l1">baerde</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Is haer benomen des heeft hy <rhyme label="b" type="m" corresp="#s6:l2">strijt</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Om teghen haer saet te <rhyme label="c" type="f">vechten</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Sijt goets moets en twijfelt <rhyme label="d" type="m">niet</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Onsen leytsman coemt hier te <rhyme label="c" type="f" corresp="#s6:l5">rechten</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Oordeel houden met syne <rhyme label="c" type="f" corresp="#s6:l5">knechten</rhyme></l>
        <l id="s6:l9" met="4" type="-+">Hy salse verlossen wt al haer <rhyme label="d" type="m" corresp="#s6:l6">verdriet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">O wachters op Syons <rhyme label="a" type="f">tooren</rhyme></l>
        <l id="s7:l2" met="4" type="-+">My dunct dat sweert is <rhyme label="b" type="m">bereyt</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Laet v basuynen noch <rhyme label="a" type="f" corresp="#s7:l1">hooren</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Of yemant in Syon in ruste <rhyme label="b" type="m" corresp="#s7:l2">leyt</rhyme></l>
        <l id="s7:l5" met="4" type="-+">Dat sy moghen <rhyme label="c" type="f">ontwaken</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Uan haren slaep <rhyme label="d" type="m">opstaen</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Dat sy haer onschult niet en <rhyme label="c" type="f" corresp="#s7:l5">maken</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Als die Heer sal comen ter <rhyme label="c" type="f" corresp="#s7:l5">wraken</rhyme></l>
        <l id="s7:l9" met="4" type="-+">Hy sal de wederspannighe <rhyme label="d" type="m" corresp="#s7:l6">slaen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">O boosen aert ghy en wilt niet <rhyme label="a" type="f">hooren</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Ghy maect v onschult al <rhyme label="b" type="m">ghelijck</rhyme></l>
        <l id="s8:l3" met="4" type="-+">De wachters segghent v wel te <rhyme label="a" type="f" corresp="#s8:l1">vooren</rhyme></l>
        <l id="s8:l4" met="4" type="-+">U naect de doot seer <rhyme label="b" type="m" corresp="#s8:l2">iammerlijck</rhyme></l>
        <l id="s8:l5" met="4" type="-+">Den vrede Gods spreect ghy <rhyme label="c" type="f">incluyten</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Maer tbloet coemt op v <rhyme label="d" type="m">hooft</rhyme></l>
        <l id="s8:l7" met="3" type="-+">Den Poortier beghint te <rhyme label="c" type="f" corresp="#s8:l5">sluyten</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Ende ghy sult blijuen <rhyme label="c" type="f" corresp="#s8:l5">buyten</rhyme></l>
        <l id="s8:l9" met="4" type="-+">Dat ghy de waerheyt niet en <rhyme label="d" type="m" corresp="#s8:l6">ghelooft</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">O moordadich saet wat gaet ghy <rhyme label="a" type="f">maken</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Gheslachte van Cain ghy brenght ter <rhyme label="b" type="m">doot</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Des Heeren schaepkens sonder <rhyme label="a" type="f" corresp="#s9:l1">snaken</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Wert dobbel betaelt in uwen <rhyme label="b" type="m" corresp="#s9:l2">schoot</rhyme></l>
        <l id="s9:l5" met="4" type="-+">Die doot coemt nv te <rhyme label="c" type="f">peerde</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Wy hebben v eynde <rhyme label="d" type="m">ghesien</rhyme></l>
        <l id="s9:l7" met="3" type="-+">Dat sweert gaet ouer <rhyme label="c" type="f" corresp="#s9:l5">deerde</rhyme></l>
        <l id="s9:l8" met="3" type="-+">Daer ghy mede ghedoot sult <rhyme label="c" type="f" corresp="#s9:l5">weerden</rhyme></l>
        <l id="s9:l9" met="4" type="-+">De helle en sult ghy niet <rhyme label="d" type="m" corresp="#s9:l6">ontulien</rhyme></l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Den tijt is hier om te <rhyme label="a" type="f">mayen</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Want de boosheyt heeft hier <rhyme label="b" type="m">douerhant</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Daer en is schier gheen plaetse om te <rhyme label="a" type="f" corresp="#s10:l1">sayen</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Dat oncruyt dat vult dat <rhyme label="b" type="m" corresp="#s10:l2">lant</rhyme></l>
        <l id="s10:l5" met="4" type="-+">Den somer is schier <rhyme label="c" type="f">gheleden</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Men hoort des trompetten <rhyme label="d" type="m">ghepijp</rhyme></l>
        <l id="s10:l7" met="3" type="-+">Die spotters verachten den <rhyme label="c" type="f" corresp="#s10:l5">vreden</rhyme></l>
        <l id="s10:l8" met="3" type="-+">Tis tijt die persse te <rhyme label="c" type="f" corresp="#s10:l5">treden</rhyme></l>
        <l id="s10:l9" met="4" type="-+">Slaet aen v seysen den oogst is <rhyme label="d" type="m" corresp="#s10:l6">rijp</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Den Heere sal den voghelen een maeltijt <rhyme label="a" type="f">bereyden</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Te brassen in Edom so ick <rhyme label="b" type="m">las</rhyme></l>
        <l id="s11:l3" met="4" type="-+">Want tegens der Princen der Coningen <rhyme label="a" type="f" corresp="#s11:l1">beyden</rhyme></l>
        <l id="s11:l4" met="4" type="-+">Coemt alle ghy voghelen versaet v <rhyme label="b" type="m" corresp="#s11:l2">ras</rhyme></l>
        <l id="s11:l5" met="4" type="-+">Wilt vanden Lansheeren vleesch v <rhyme label="c" type="f">voeden</rhyme></l>
        <l id="s11:l6" met="3" type="-+">So sy deden so wert haer <rhyme label="d" type="m">ghedaen</rhyme></l>
        <l id="s11:l7" met="3" type="-+">Ende ghy knechten weest vroom van <rhyme label="c" type="f" corresp="#s11:l5">moede</rhyme></l>
        <l id="s11:l8" met="3" type="-+">Wascht v voeten inden goddeloosen <rhyme label="c" type="f" corresp="#s11:l5">bloede</rhyme></l>
        <l id="s11:l9" met="4" type="-+">Desen loon sullen ons roouers <rhyme label="d" type="m" corresp="#s11:l6">ontfaen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Staet op Ierusalem wilt v <rhyme label="a" type="f">bereyden</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Ontfanct v croone aenschout v <rhyme label="b" type="m">rijck</rhyme></l>
        <l id="s12:l3" met="4" type="-+">Wilt v tenten wijt wt <rhyme label="a" type="f" corresp="#s12:l1">breyden</rhyme></l>
        <l id="s12:l4" met="4" type="-+">Ontfanct v kinderen alle <rhyme label="b" type="m" corresp="#s12:l2">ghelijck</rhyme></l>
        <l id="s12:l5" met="4" type="-+">Uwen Coninck coemt om te <rhyme label="c" type="f">bereyden</rhyme></l>
        <l id="s12:l6" met="3" type="-+">Dijnen loon brengt hy voor haer <rhyme label="d" type="m">pleyn</rhyme></l>
        <l id="s12:l7" met="3" type="-+">Hy sal hem in v <rhyme label="c" type="f" corresp="#s12:l5">verbleyden</rhyme></l>
        <l id="s12:l8" met="3" type="-+">Wy sullen in zijn glorie <rhyme label="c" type="f" corresp="#s12:l5">weyden</rhyme></l>
        <l id="s12:l9" met="4" type="-+">Uerblijt v Sion met Ierusalem <rhyme label="d" type="m" corresp="#s12:l6">reyn</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Uerblijt v met iuechden met <rhyme label="a" type="f">vruechden</rhyme></l>
        <l id="s13:l2" met="4" type="-+">Speelt op de harpe een nieu <rhyme label="b" type="m">liet</rhyme></l>
        <l id="s13:l3" met="4" type="-+">Wilt v in onsen God <rhyme label="a" type="f" corresp="#s13:l1">veriuechden</rhyme></l>
        <l id="s13:l4" met="4" type="-+">Ghy alle die dese wrake <rhyme label="b" type="m" corresp="#s13:l2">siet</rhyme></l>
        <l id="s13:l5" met="4" type="-+">Die Heere coemt om <rhyme label="c" type="f">betalen</rhyme></l>
        <l id="s13:l6" met="3" type="-+">Om te wreken ons alder <rhyme label="d" type="m">bloet</rhyme></l>
        <l id="s13:l7" met="3" type="-+">Sijn gramschap beghint te <rhyme label="c" type="f" corresp="#s13:l5">dalen</rhyme></l>
        <l id="s13:l8" met="3" type="-+">Wy verwachten de laetste <rhyme label="c" type="f" corresp="#s13:l5">schalen</rhyme></l>
        <l id="s13:l9" met="4" type="-+">O ghy bruyt gaet uwen bruydegom te <rhyme label="d" type="m" corresp="#s13:l6">gemoet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

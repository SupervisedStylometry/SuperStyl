    <melody>Een meisje op een riviertje zat</melody>
    <categories>
      <category translation="occasions">gelegenheden</category>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Jan Jansz. Deutel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ICk roep tot u, o Schepper <rhyme label="a" type="m">mijn</rhyme>,</l>
        <l id="s1:l2" met="2" type="-+">Waer sal ick <rhyme label="a" type="m" corresp="#s1:l1">zijn</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Ick waer soo geern in 't beloofde <rhyme label="b" type="m">landt</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">In u rijck <rhyme label="b" type="m" corresp="#s1:l3">playsant</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Het landt heb ick van verre <rhyme label="a" type="m">ghesien</rhyme>,</l>
        <l id="s2:l2" met="2" type="-+">Mocht icker in <rhyme label="a" type="m" corresp="#s2:l1">vlien</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Dat waer mijn lust by u te <rhyme label="b" type="m">zijn</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">O Heere <rhyme label="b" type="m" corresp="#s2:l3">mijn</rhyme>!</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">De vrught des lants, alsoomen <rhyme label="a" type="m">leest</rhyme>,</l>
        <l id="s3:l2" met="2" type="-+">Al inden <rhyme label="a" type="m" corresp="#s3:l1">Gheest</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Komt laet ons eten <rhyme label="b" type="m">onbevreest</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">In den Heeren <rhyme label="b" type="m" corresp="#s3:l3">feest</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Een eeuwighe vreught met blijden <rhyme label="a" type="m">ghesanck</rhyme>,</l>
        <l id="s4:l2" met="2" type="-+">Een eeuwighen <rhyme label="a" type="m" corresp="#s4:l1">danck</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Sal daer opgaen een vrolijck <rhyme label="b" type="m">geclanck</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">Inder eeuwigheydt <rhyme label="b" type="m" corresp="#s4:l3">lanck</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Veel vreucht en blijtschap <rhyme label="a" type="m">blijdelijck</rhyme>,</l>
        <l id="s5:l2" met="2" type="-+">In 't <rhyme label="a" type="m" corresp="#s5:l1">Hemelrijck</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Sullen sy aenschouwen <rhyme label="b" type="m">eeuwelijck</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">By den Heere <rhyme label="b" type="m" corresp="#s5:l3">ghelijck</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Mijn hert verlanghet alsoo <rhyme label="a" type="m">seer</rhyme>,</l>
        <l id="s6:l2" met="2" type="-+">O lieve <rhyme label="a" type="m" corresp="#s6:l1">Heer</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Houdt mijn doch vast al in u <rhyme label="b" type="m">leer</rhyme>,</l>
        <l id="s6:l4" met="2" type="-+">Dats mijn <rhyme label="b" type="m" corresp="#s6:l3">begheer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Als ick denk om het eeuwighe <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s7:l2" met="2" type="-+">Dan heb ick <rhyme label="a" type="m" corresp="#s7:l1">moet</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Als ick ghedenck Godts liefde <rhyme label="b" type="m">soet</rhyme>,</l>
        <l id="s7:l4" met="2" type="-+">Wat hy ons <rhyme label="b" type="m" corresp="#s7:l3">doet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">De wille des Heeren moet <rhyme label="a" type="m">geschien</rhyme>,</l>
        <l id="s8:l2" met="2" type="-+">Aenhoort goe <rhyme label="a" type="m" corresp="#s8:l1">lien</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Alsoo 't de Heere heeft <rhyme label="b" type="m">voorsien</rhyme>,</l>
        <l id="s8:l4" met="2" type="-+">Wilt daer in <rhyme label="b" type="m" corresp="#s8:l3">verblijen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Al die volstandigh blijven <rhyme label="a" type="m">schoon</rhyme>,</l>
        <l id="s9:l2" met="2" type="-+">Die sullen Godts <rhyme label="a" type="m" corresp="#s9:l1">Soon</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Aenschouwen in des Hemels <rhyme label="b" type="m">Throon</rhyme>,</l>
        <l id="s9:l4" met="2" type="-+">Dat is haer <rhyme label="b" type="m" corresp="#s9:l3">loon</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Adieu mijn alderliefste <rhyme label="a" type="m">Vrou</rhyme>,</l>
        <l id="s10:l2" met="2" type="-+">En maeckt gheen <rhyme label="a" type="m" corresp="#s10:l1">rou</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Op dat ick u by den Heer <rhyme label="b" type="m">aenschou</rhyme>,</l>
        <l id="s10:l4" met="2" type="-+">En blijft <rhyme label="b" type="m" corresp="#s10:l3">ghetrou</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Wil yemandt singen dit simpel <rhyme label="a" type="m">Liedt</rhyme></l>
        <l id="s11:l2" met="2" type="-+">Die moet met <rhyme label="a" type="m" corresp="#s11:l1">vliedt</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Al na den gheest oock zijn <rhyme label="b" type="m">verblijdt</rhyme></l>
        <l id="s11:l4" met="2" type="-+">Oft ten is al <rhyme label="b" type="m" corresp="#s11:l3">niet</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Noch eens beveel ick u den <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s12:l2" met="2" type="-+">Op dit pas niet <rhyme label="a" type="m" corresp="#s12:l1">meer</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Houdt u vast aen Christi <rhyme label="b" type="m">leer</rhyme>,</l>
        <l id="s12:l4" met="2" type="-+">Dat in mijn <rhyme label="b" type="m" corresp="#s12:l3">begeer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>22709</id>
    <date>
      <year-start>1576</year-start>
      <year-end>1582</year-end>
    </date>
    <tags>
      <tag standard-name="loflied" translation="praise song">loflied</tag>
      <tag standard-name="bespiegelend lied" translation="reflective song">bespiegelend lied</tag>
    </tags>
    <melody>Rijke God hoe is mijn boeltje dus wild</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>David Joris</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Alle vleysch is hoy, alsoo men <rhyme label="a" type="m">siet</rhyme>:</l>
        <l id="s1:l2" met="4" type="-+">Want sonder Godt is sijn vermoghen <rhyme label="a" type="m" corresp="#s1:l1">niet</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Ydel is al sijn <rhyme label="b" type="f">leven</rhyme>.</l>
        <l id="s1:l4" met="4" type="-+">Sijn glorie is als een bloeme des <rhyme label="c" type="m">gras</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Int verdorren <rhyme label="c" type="m" corresp="#s1:l4">ras</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Wiltet gheen aenschouwen <rhyme label="b" type="f" corresp="#s1:l3">gheven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Sijn glorie is als een wallemte <rhyme label="a" type="m">hier</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Als een belleken op dat water <rhyme label="a" type="m" corresp="#s2:l1">fier</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Vol loghen unde <rhyme label="b" type="f">schanden</rhyme>:</l>
        <l id="s2:l4" met="4" type="-+">Godts Woordt blijft inder <rhyme label="c" type="m">eewicheydt</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Dat nu <rhyme label="c" type="m" corresp="#s2:l4">verbreydt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Soo verre in alle <rhyme label="b" type="f" corresp="#s2:l3">Landen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Godts Woordt heeft inden beginnen <rhyme label="a" type="m">gheweest</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Sijn cracht, sijn macht inden Heylighen <rhyme label="a" type="m" corresp="#s3:l1">Gheest</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Voetsel van onser <rhyme label="b" type="f">Zielen</rhyme>:</l>
        <l id="s3:l4" met="4" type="-+">Die Wech, die Waerheyt, die <rhyme label="c" type="m">Wijngaert-stam</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">T'onbevleckte <rhyme label="c" type="m" corresp="#s3:l4">Lam</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Wilt dat alleenich <rhyme label="b" type="f" corresp="#s3:l3">knielen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

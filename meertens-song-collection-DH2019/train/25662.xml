  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Laet ons knielen voor Gods <rhyme label="a" type="m">aenschijn</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">V, O Godt, wy dancken en <rhyme label="b" type="f">loven</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Belijden u noch daer en <rhyme label="b" type="f" corresp="#s1:l2">boven</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Bysonder, een Heere te <rhyme label="a" type="m" corresp="#s1:l1">zijn</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">En u vereert die gantsche <rhyme label="c" type="f">Aerde</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Recht als Vader, eeuwich, <rhyme label="d" type="m">altijt</rhyme></l>
        <l id="s1:l7" met="4" type="-+">T’ghetal der Enghelen <rhyme label="d" type="m" corresp="#s1:l6">subijt</rhyme></l>
        <l id="s1:l8" met="4" type="-+">Gantsch heylich ende groot in <rhyme label="c" type="f" corresp="#s1:l5">waerde</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">En den Hemel en alle <rhyme label="a" type="m">cracht</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Rijcklijck hier toe die <rhyme label="b" type="f">Cherubimmen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Iae oock met haer die <rhyme label="b" type="f" corresp="#s2:l2">Cheraphimmen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Troulijck nu roepen dach en <rhyme label="a" type="m" corresp="#s2:l1">nacht</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Sonder ophouden en <rhyme label="c" type="f">cesseren</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Heylich, Heylich, Heylich, noch <rhyme label="d" type="m">meer</rhyme></l>
        <l id="s2:l7" met="4" type="-+">Is de Godt Zebaoth en <rhyme label="d" type="m" corresp="#s2:l6">Heer</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">Dit gheschiedt u lof te <rhyme label="c" type="f" corresp="#s2:l5">vermeeren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Vol is den Hemelen die <rhyme label="a" type="m">Aerd</rhyme></l>
        <l id="s3:l2" met="4" type="-+">‘Van uwer Majesteyt <rhyme label="b" type="f">ghepresen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">En van uwen heerlijcken <rhyme label="b" type="f" corresp="#s3:l2">wesen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Die vergaderingh’ groot en <rhyme label="a" type="m" corresp="#s3:l1">waerd</rhyme>’</l>
        <l id="s3:l5" met="4" type="-+">Der heerlijcker Enghelscher <rhyme label="c" type="f">scharen</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Dat hoogh loflijck en groot <rhyme label="d" type="m">ghetal</rhyme></l>
        <l id="s3:l7" met="4" type="-+">Vwer Propheten over <rhyme label="d" type="m" corresp="#s3:l6">al</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">En reynicheyt der <rhyme label="c" type="f" corresp="#s3:l5">Martelaren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Die loven u t’samen <rhyme label="a" type="m">eersaem</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Die gantsche heylighe <rhyme label="b" type="f">ghemeyne</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Des gantschen aerdtbodems soo <rhyme label="b" type="f" corresp="#s4:l2">reyne</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Belijden u gheheel <rhyme label="a" type="m" corresp="#s4:l1">bequaem</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Eenen oneyndelijcken <rhyme label="c" type="f">Vader</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Der heerlijckheyt  en uwen <rhyme label="d" type="m">Soon</rhyme></l>
        <l id="s4:l7" met="4" type="-+">Eerweerdich, waerlijck, eenich, <rhyme label="d" type="m" corresp="#s4:l6">schoon</rhyme>,</l>
        <l id="s4:l8" met="4" type="-+">Den heylighen Gheest onsen <rhyme label="c" type="f" corresp="#s4:l5">ontlader</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Christe ghy zijt een Coninck <rhyme label="a" type="m">groot</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Der heerlyckheyt  des Vaders <rhyme label="b" type="f">Soone</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Om bevrijden den Mensch <rhyme label="b" type="f" corresp="#s5:l2">ydoone</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Hebt ghy niet ghescheurt in der <rhyme label="a" type="m" corresp="#s5:l1">noot</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Den Buyck der Maghet, soo wy <rhyme label="c" type="f">lesen</rhyme>?</l>
        <l id="s5:l6" met="4" type="-+">Doen ghy den doodt soo <rhyme label="d" type="m">overwondt</rhyme></l>
        <l id="s5:l7" met="4" type="-+">Hebt ghy den gheloovighen <rhyme label="d" type="m" corresp="#s5:l6">ront</rhyme></l>
        <l id="s5:l8" met="4" type="-+">t’Hemelrijck gheopent met <rhyme label="c" type="f" corresp="#s5:l5">desen</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Tot Godes rechter handt sit <rhyme label="a" type="m">ghy</rhyme></l>
        <l id="s6:l2" met="4" type="-+">In des Vaders eeuwighe <rhyme label="b" type="f">glory</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Toecomende dan met <rhyme label="b" type="f" corresp="#s6:l2">victory</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Een rechtveerdighe Richter <rhyme label="a" type="m" corresp="#s6:l1">vry</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Daerom comt en helpt ons int <rhyme label="c" type="f">goede</rhyme></l>
        <l id="s6:l6" met="4" type="-+">Die nu zijn, Heer, u <rhyme label="d" type="m">huysghesin</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Dierbaer verlost van prijs niet <rhyme label="d" type="m" corresp="#s6:l6">min</rhyme>,</l>
        <l id="s6:l8" met="4" type="-+">Dan met uwen dierbaren <rhyme label="c" type="f" corresp="#s6:l5">bloede</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Begaeft uwe Heylighen <rhyme label="a" type="m">teere</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Met eeuwighe glory en <rhyme label="b" type="f">eer</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Maeckt heylich u volck lieve <rhyme label="b" type="f" corresp="#s7:l2">Heere</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Ghebenedijdt u erfdeel <rhyme label="a" type="m" corresp="#s7:l1">zeer</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">En wiltse, Heere, doch <rhyme label="c" type="f">regieren</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Verheftse eeuwich, maecktse <rhyme label="d" type="m">bly</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">Alle daghen (u Heere) <rhyme label="d" type="m" corresp="#s7:l6">wy</rhyme></l>
        <l id="s7:l8" met="4" type="-+">Ghebenedijen <rhyme label="c" type="f" corresp="#s7:l5">goedertieren</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">V loven wy, o Godt <rhyme label="a" type="m">bereyt</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Van eeuwicheyt tot <rhyme label="b" type="f">eeuwicheyden</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Heere, wilt ons doch soo <rhyme label="b" type="f" corresp="#s8:l2">bereyden</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">En weerdich maken met <rhyme label="a" type="m" corresp="#s8:l1">bescheyt</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">En desen dach voor zond’ <rhyme label="c" type="f">bewaren</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Ontfermt u onser, lieve <rhyme label="d" type="m">Vaer</rhyme>,</l>
        <l id="s8:l7" met="4" type="-+">Ontfermt u onser <rhyme label="d" type="m" corresp="#s8:l6">allegaer</rhyme>,</l>
        <l id="s8:l8" met="4" type="-+">T’is ons bede, hoort dit <rhyme label="c" type="f" corresp="#s8:l5">verclaren</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Vwe barmherticheyt zy <rhyme label="a" type="m">nu</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Over ons, soo wy in u <rhyme label="b" type="f">hoopen</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">En met betrouwen tot u <rhyme label="b" type="f" corresp="#s9:l2">loopen</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Wy hebben, Heer, ghehoept in <rhyme label="a" type="m" corresp="#s9:l1">u</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">En sullen niet worden tot <rhyme label="c" type="f">schanden</rhyme></l>
        <l id="s9:l6" met="4" type="-+">In eeuwicheyt, door s’vyandts <rhyme label="d" type="m">nijt</rhyme>,</l>
        <l id="s9:l7" met="4" type="-+">Lief Heer, helpt ons hier in <rhyme label="d" type="m" corresp="#s9:l6">altijdt</rhyme>,</l>
        <l id="s9:l8" met="4" type="-+">Wy bevelen ons in u <rhyme label="c" type="f" corresp="#s9:l5">handen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

      <year-start>1614</year-start>
      <year-end>1614</year-end>
    </date>
    <location>
      <orginal-name>haarlem</orginal-name>
      <standard-name>Haarlem, The Netherlands</standard-name>
      <coordinates>
        <lon>52.3885317</lon>
        <lat>4.6388048</lat>
      </coordinates>
    </location>
    <tags/>
    <melody>Toen Hanselijn over de heide reed</melody>
  <author>Marijn de Brauwer</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HOe weynich bedincket den mensche <rhyme label="a" type="m">fris</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">wat hem al is <rhyme label="b" type="f">gegeven</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Hoe dat hy van God geschapen <rhyme label="a" type="m" corresp="#s1:l1">is</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Om met hem eeuwich te <rhyme label="b" type="f" corresp="#s1:l2">leven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Maer door sDuyvels nijdicheyt <rhyme label="a" type="m">groot</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Hebben Gods Beelt <rhyme label="b" type="f">verloren</rhyme></l>
        <l id="s2:l3" met="4" type="-+">En sijn gevallen inde <rhyme label="a" type="m" corresp="#s2:l1">doot</rhyme></l>
        <l id="s2:l4" met="3" type="-+">En in des vaders <rhyme label="b" type="f" corresp="#s2:l2">toren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Sy sijn gecomen inden <rhyme label="a" type="m">vloeck</rhyme></l>
        <l id="s3:l2" met="3" type="-+">En int verderf <rhyme label="b" type="f">eylaken</rhyme></l>
        <l id="s3:l3" met="4" type="-+">daer was op aerde niet eene so <rhyme label="a" type="m" corresp="#s3:l1">cloec</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Die daer uyt conde <rhyme label="b" type="f" corresp="#s3:l2">geraken</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Adam en al wat naer hem <rhyme label="a" type="m">quam</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Sijn inde doot <rhyme label="b" type="f">verslonden</rhyme></l>
        <l id="s4:l3" met="4" type="-+">maer Christus dat onbevlecte <rhyme label="a" type="m" corresp="#s4:l1">Lam</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Die heeft noch raet <rhyme label="b" type="f" corresp="#s4:l2">gevonden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Hy heeft door sijn liefde <rhyme label="a" type="m">doorstraelt</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Dat menschelijck <rhyme label="b" type="f">geslachte</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Gecocht, en met sijn leven <rhyme label="a" type="m" corresp="#s5:l1">betaelt</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Och hout dit in u <rhyme label="b" type="f" corresp="#s5:l2">gedachte</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Daer is aen u veel geleyt te <rhyme label="a" type="m">cost</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Al van Christum <rhyme label="b" type="f">devijne</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Hy heeft u met sijnen bloede <rhyme label="a" type="m" corresp="#s6:l1">verlost</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Om dat ghy sout worden <rhyme label="b" type="f" corresp="#s6:l2">sijne</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Is dat de liefde die ghy <rhyme label="a" type="m">bewijst</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Aen uwen <rhyme label="b" type="f">Salichmaker</rhyme></l>
        <l id="s7:l3" met="4" type="-+">In plaetse dat ghy hem looft en <rhyme label="a" type="m" corresp="#s7:l1">prijst</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Sijt ghy hem een <rhyme label="b" type="f" corresp="#s7:l2">versaker</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Die u bewijst alle <rhyme label="a" type="m">weldaet</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Gaet ghy den rugge <rhyme label="b" type="f">keeren</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Van hem en volcht die werelt <rhyme label="a" type="m" corresp="#s8:l1">quaet</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Liever dan goet doen <rhyme label="b" type="f" corresp="#s8:l2">leeren</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Hoe machmen wesen so <rhyme label="a" type="m">verblent</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Dat wy moetwillens <rhyme label="b" type="f">dolen</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Die so wel den wille des Heeren <rhyme label="a" type="m" corresp="#s9:l1">kent</rhyme></l>
        <l id="s9:l4" met="3" type="-+">En niet en is <rhyme label="b" type="f" corresp="#s9:l2">verholen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Vliet doch in tijts dat groot <rhyme label="a" type="m">dangier</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Dat u God mach <rhyme label="b" type="f">ontfarmen</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Al en brande maer uwen vinger int <rhyme label="a" type="m" corresp="#s10:l1">vyer</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Ghy sout so seere <rhyme label="b" type="f" corresp="#s10:l2">carmen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">De Heere klaecht door Esdras <rhyme label="a" type="m">coen</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Over dat volck <rhyme label="b" type="f">mispresen</rhyme></l>
        <l id="s11:l3" met="4" type="-+">Wat hadde ic meer connen <rhyme label="a" type="m" corresp="#s11:l1">gedoen</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Dan ick hebbe <rhyme label="b" type="f" corresp="#s11:l2">bewesen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Sy dolen metter herten <rhyme label="a" type="m">snel</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Ende en willen myne <rhyme label="b" type="f">wegen</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Niet volgen om dat ic haer dede <rhyme label="a" type="m" corresp="#s12:l1">wel</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Daer toe is God <rhyme label="b" type="f" corresp="#s12:l2">genegen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Wat vreucht waert uwe moeder <rhyme label="a" type="m">fijn</rhyme></l>
        <l id="s13:l2" met="3" type="-+">Dat ghy God wildet <rhyme label="b" type="f">vreesen</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Het ware haer heere een <rhyme label="a" type="m" corresp="#s13:l1">Medecijn</rhyme></l>
        <l id="s13:l4" met="3" type="-+">En u geluck naer <rhyme label="b" type="f" corresp="#s13:l2">desen</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Zy heeft u so die schrift <rhyme label="a" type="m">verklaert</rhyme></l>
        <l id="s14:l2" met="3" type="-+">Gedragen onder haer <rhyme label="b" type="f">herte</rhyme></l>
        <l id="s14:l3" met="4" type="-+">Ghinck neghen maenden met u <rhyme label="a" type="m" corresp="#s14:l1">bezwaert</rhyme></l>
        <l id="s14:l4" met="3" type="-+">Gebaert // met groote <rhyme label="b" type="f" corresp="#s14:l2">smerte</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">En heeft u met seer groot <rhyme label="a" type="m">gedult</rhyme></l>
        <l id="s15:l2" met="3" type="-+">Opghevoet sonder <rhyme label="b" type="f">falen</rhyme></l>
        <l id="s15:l3" met="4" type="-+">De weldaet gy nimmermeer en <rhyme label="a" type="m" corresp="#s15:l1">sult</rhyme></l>
        <l id="s15:l4" met="3" type="-+">Aen u moeder <rhyme label="b" type="f" corresp="#s15:l2">betalen</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Het is Tobias wel <rhyme label="a" type="m">gheluckt</rhyme></l>
        <l id="s16:l2" met="3" type="-+">Hy vreesde Godt op <rhyme label="b" type="f">eerden</rhyme></l>
        <l id="s16:l3" met="4" type="-+">Sijn Moeder en maecte hy niet <rhyme label="a" type="m" corresp="#s16:l1">bedruct</rhyme></l>
        <l id="s16:l4" met="3" type="-+">Maer hieltse in hooger <rhyme label="b" type="f" corresp="#s16:l2">weerden</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Maer Esau en ander <rhyme label="a" type="m">meer</rhyme></l>
        <l id="s17:l2" met="3" type="-+">Absalon oock af <rhyme label="b" type="f">wende</rhyme>,</l>
        <l id="s17:l3" met="4" type="-+">Sy waren haer Ouders enckel <rhyme label="a" type="m" corresp="#s17:l1">hertzeer</rhyme></l>
        <l id="s17:l4" met="3" type="-+">Quamen tot quaden <rhyme label="b" type="f" corresp="#s17:l2">ende</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Prince dit wensche ic u voor u <rhyme label="a" type="m">deel</rhyme></l>
        <l id="s18:l2" met="3" type="-+">Tot u beste <rhyme label="b" type="f">beclyven</rhyme></l>
        <l id="s18:l3" met="4" type="-+">Dat siel en lichaem mach <rhyme label="a" type="m" corresp="#s18:l1">geheel</rhyme></l>
        <l id="s18:l4" met="3" type="-+">Hier naer behouden <rhyme label="b" type="f" corresp="#s18:l2">blyven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

    <melody>Nerea schoonste van uw geburen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Jacob Rosant</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">NAe dat Heer Iesus was <rhyme label="a" type="f">verresen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Heeft hy hem <rhyme label="b" type="m">geopenbaert</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Sijn Jongers, en die <rhyme label="a" type="f" corresp="#s1:l1">onderweesen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">En veel Misterien <rhyme label="b" type="m" corresp="#s1:l2">verklaert</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Aen mijn is alle maght <rhyme label="a" type="f">gegeeven</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Ind' Heemel ende op de <rhyme label="b" type="m">Aerdt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Dus gaende door de Weerelt <rhyme label="a" type="f" corresp="#s2:l1">sweeven</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Al d'Heydenen mijn Leer <rhyme label="b" type="m" corresp="#s2:l2">verklaert</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Preekt alle Creatuer te <rhyme label="a" type="f">same</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Het Evangeli, en doopt <rhyme label="b" type="m">haer</rhyme></l>
        <l id="s3:l3" met="4" type="-+">In 's Vaders, 's Soons, en 's Geestes <rhyme label="a" type="f" corresp="#s3:l1">name</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Leert s' houden mijn gebooden <rhyme label="b" type="m" corresp="#s3:l2">klaer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Soo wie looft en gedoopt sal <rhyme label="a" type="f">weesen</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Tot sijne Saligheede <rhyme label="b" type="m">komt</rhyme>;</l>
        <l id="s4:l3" met="4" type="-+">Maer soo wie niet gelooven, <rhyme label="a" type="f" corresp="#s4:l1">deesen</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Sal seekerlijke sijn <rhyme label="b" type="m" corresp="#s4:l2">verdomt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

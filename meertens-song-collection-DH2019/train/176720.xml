    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Hendrik Rintjes</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Troost Heer en komt my doch te <rhyme label="a" type="f">baten</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Op u verlaet ick my <rhyme label="b" type="m">altijt</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Wilt my doch nimmermeer <rhyme label="a" type="f" corresp="#s1:l1">verlaten</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Want ghy Godt gantsch barmhertigh <rhyme label="b" type="m" corresp="#s1:l2">zijt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Recht richt doch Heer, al mijne <rhyme label="a" type="f">gangen</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Nae uwen wil mijn leven <rhyme label="b" type="m">lanck</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Mijn Ziel doet seer daer nae <rhyme label="a" type="f" corresp="#s2:l1">verlanghen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Sy soud’ u segghen lof en <rhyme label="b" type="m" corresp="#s2:l2">danck</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">In u Wet wilt my <rhyme label="a" type="f">onderwijsen</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">U woort gheeft my recht te <rhyme label="b" type="m">verstaen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Dat ick daer in mach <rhyme label="a" type="f" corresp="#s3:l1">verjolijsen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">En my soo gantsch te buyten <rhyme label="b" type="m" corresp="#s3:l2">gaen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Iae alle dinck nae uwen <rhyme label="a" type="f">wille</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Mach ghebruycken tot uwer <rhyme label="b" type="m">eer</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">End’ houden nu alleen <rhyme label="a" type="f" corresp="#s4:l1">stille</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">En laten u wercken o <rhyme label="b" type="m" corresp="#s4:l2">Heer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Neemt van my wech al u <rhyme label="a" type="f">mishaghen</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Dat by my is in ‘t groot en <rhyme label="b" type="m">kleyn</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">U Iock dat wil ick gheerne <rhyme label="a" type="f" corresp="#s5:l1">draghen</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">En blijven t’uwen dienst <rhyme label="b" type="m" corresp="#s5:l2">alleyn</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Grootlijck doet mijn geloof <rhyme label="a" type="f">vermeeren</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Gheeft dat het mach soo dadigh <rhyme label="b" type="m">zijn</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Dat ick tot lof van uwer <rhyme label="a" type="f" corresp="#s6:l1">eeren</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Verslijten mach het leven <rhyme label="b" type="m" corresp="#s6:l2">mijn</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Een vyer der liefden doet doch <rhyme label="a" type="f">branden</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Inwendigh in mijns herten <rhyme label="b" type="m">gront</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Dat het licht schijnt in alle <rhyme label="a" type="f" corresp="#s7:l1">Landen</rhyme></l>
        <l id="s7:l4" met="4" type="-+">End’ u goet daden maecke <rhyme label="b" type="m" corresp="#s7:l2">kont</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Noch Heer, gheeft my alsoo te <rhyme label="a" type="f">hoopen</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Dat ick voor u zy sonder <rhyme label="b" type="m">schult</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">En mijnen loop alsoo mach <rhyme label="a" type="f" corresp="#s8:l1">loopen</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Tot dat mijn daghen zijn <rhyme label="b" type="m" corresp="#s8:l2">vervult</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Blijft doch by my tot aen mijn <rhyme label="a" type="f">eynde</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Hout my ghestadigh by der <rhyme label="b" type="m">hant</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Het stormt, het haghelt, oft het <rhyme label="a" type="f" corresp="#s9:l1">weynde</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Tot ick kom in ‘t Hemelsche <rhyme label="b" type="m" corresp="#s9:l2">Landt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Raedt mt door u wijsheyt <rhyme label="a" type="f">ghepresen</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Waer ick keeren oft wenden <rhyme label="b" type="m">sal</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Wat mijn doen en laten sal <rhyme label="a" type="f" corresp="#s10:l1">wesen</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Soo langh ick leef in ‘t aertsche <rhyme label="b" type="m" corresp="#s10:l2">dal</rhyme></l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Van u te blijven is my <rhyme label="a" type="f">pijne</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Wilt my halen in u <rhyme label="b" type="m">rust</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Dat u aenghesicht my <rhyme label="a" type="f" corresp="#s11:l1">aenschijne</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Heer dat waer al mijns herten <rhyme label="b" type="m" corresp="#s11:l2">lust</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Nu ik Heer, noch wat tijts moet <rhyme label="a" type="f">beyden</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Beladen met meenighen <rhyme label="b" type="m">strijdt</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Ghelijck een Schaepken aen der <rhyme label="a" type="f" corresp="#s12:l1">heyden</rhyme></l>
        <l id="s12:l4" met="4" type="-+">O Heer my van den Leeuw <rhyme label="b" type="m" corresp="#s12:l2">bevrijdt</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">En recht mijn saeck tot allen <rhyme label="a" type="f">tijden</rhyme></l>
        <l id="s13:l2" met="4" type="-+">Want ghy mijn kleyn vermoghen <rhyme label="b" type="m">kent</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Ick sal my hooghlijck <rhyme label="a" type="f" corresp="#s13:l1">verblijden</rhyme></l>
        <l id="s13:l4" met="4" type="-+">Als ghy u stadigh tot my <rhyme label="b" type="m" corresp="#s13:l2">went</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Niet ons o Heer, maer u <rhyme label="a" type="f">waerachtig</rhyme></l>
        <l id="s14:l2" met="4" type="-+">Behoort alleen lof, eer, en <rhyme label="b" type="m">prijs</rhyme></l>
        <l id="s14:l3" met="4" type="-+">Ghy zijt een Godt end’ Heere <rhyme label="a" type="f" corresp="#s14:l1">machtigh</rhyme></l>
        <l id="s14:l4" met="4" type="-+">Een beschermer, end’ Koninck <rhyme label="b" type="m" corresp="#s14:l2">wijs</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

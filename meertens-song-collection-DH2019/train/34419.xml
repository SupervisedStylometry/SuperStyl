    <melody>Gewaardig u o Heer</melody>
    <categories>
      <category translation="seasons and annual events">jaarkring</category>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Godfried Bussé</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">GHeweerdight u ô <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Kleyn Kindeken seer <rhyme label="a" type="m" corresp="#s1:l1">teer</rhyme>:</l>
        <l id="s1:l3" met="3" type="-+">Dat ick u mach <rhyme label="b" type="f">ghenaecken</rhyme>:</l>
        <l id="s1:l4" met="3" type="-+">Soeten <rhyme label="c" type="m">Emanuel</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Behaeght u eenigh <rhyme label="c" type="m" corresp="#s1:l4">spel</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Komt u met my <rhyme label="b" type="f" corresp="#s1:l3">vermaecken</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Al ben ick nu wat <rhyme label="a" type="m">vry</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Jesu, verghevet <rhyme label="a" type="m" corresp="#s2:l1">my</rhyme>;</l>
        <l id="s2:l3" met="3" type="-+">Ke wilt het doch <rhyme label="b" type="f">ghedooghen</rhyme>;</l>
        <l id="s2:l4" met="3" type="-+">Jck sal u <rhyme label="c" type="m">voesteren</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Jck sal u <rhyme label="c" type="m" corresp="#s2:l4">koesteren</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Naer alle mijn <rhyme label="b" type="f" corresp="#s2:l3">vermooghen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Komt dan mijn soetste <rhyme label="a" type="m">lief</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Komt neemt wat u <rhyme label="a" type="m" corresp="#s3:l1">gherief</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Komt alderhooghsten <rhyme label="b" type="f">Koninck</rhyme>;</l>
        <l id="s3:l4" met="3" type="-+">Voor t'kribbeken van <rhyme label="c" type="m">bert</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Nemt dit ghebroecken <rhyme label="c" type="m" corresp="#s3:l4">hert</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Komt nemt daer in u <rhyme label="b" type="f" corresp="#s3:l3">wooningh</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Mijnen wil wel <rhyme label="a" type="m">bereyt</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Js t'beddeken <rhyme label="a" type="m" corresp="#s4:l1">ghespreyt</rhyme>;</l>
        <l id="s4:l3" met="3" type="-+">Komt daer, ô Heer op <rhyme label="b" type="f">slaepen</rhyme>:</l>
        <l id="s4:l4" met="3" type="-+">Mijn vlees verdort als <rhyme label="c" type="m">hoy</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">Dient voor de bedde <rhyme label="c" type="m" corresp="#s4:l4">stroy</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Wilt ruste daer op <rhyme label="b" type="f" corresp="#s4:l3">raepen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Een huppelinck heel <rhyme label="a" type="m">saeght</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Sal wesen mijn <rhyme label="a" type="m" corresp="#s5:l1">ghedaght</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Belieft daer op te <rhyme label="b" type="f">rusten</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Het oodtmoedigh <rhyme label="c" type="m">verstant</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Sal als een <rhyme label="c" type="m" corresp="#s5:l4">bindel-bant</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Om-vatten u met <rhyme label="b" type="f" corresp="#s5:l3">lusten</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Sijt ghy van kouw' <rhyme label="a" type="m">verkilt</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Soo bid ick dat ghy <rhyme label="a" type="m" corresp="#s6:l1">wilt</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Wat rusten in mijn <rhyme label="b" type="f">armen</rhyme>:</l>
        <l id="s6:l4" met="3" type="-+">Mijn liefde brandigh <rhyme label="c" type="m">heet</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Sal voor een bedde <rhyme label="c" type="m" corresp="#s6:l4">kleet</rhyme></l>
        <l id="s6:l6" met="3" type="-+">U lieffelijck <rhyme label="b" type="f" corresp="#s6:l3">verwarmen</rhyme>,</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Maer wat ghebreckt hier <rhyme label="a" type="m">noch</rhyme>?</l>
        <l id="s7:l2" met="3" type="-+">Het moederlijcke <rhyme label="a" type="m" corresp="#s7:l1">soch</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Dit doet mijn hert <rhyme label="b" type="f">bedroeven</rhyme>:</l>
        <l id="s7:l4" met="3" type="-+">Wat sal ick maecken <rhyme label="c" type="m">dan</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Soo veer' ick niet en <rhyme label="c" type="m" corresp="#s7:l4">kan</rhyme></l>
        <l id="s7:l6" met="3" type="-+">U vrindelijckxkens <rhyme label="b" type="f" corresp="#s7:l3">toeven</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">K'en heb gheen volle <rhyme label="a" type="m">borst</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Om uwen grooten <rhyme label="a" type="m" corresp="#s8:l1">dorst</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Mijn lieveken te <rhyme label="b" type="f">stelpen</rhyme>;</l>
        <l id="s8:l4" met="3" type="-+">Maer weet noch eenigh <rhyme label="c" type="m">nat</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Dat moeghelijck u <rhyme label="c" type="m" corresp="#s8:l4">wat</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Jn desen noodt sal <rhyme label="b" type="f" corresp="#s8:l3">helpen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">De liefde die my <rhyme label="a" type="m">perst</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Doet dat uyt d'ooghen <rhyme label="a" type="m" corresp="#s9:l1">berst</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Een vloeyende <rhyme label="b" type="f">sprinck-aeder</rhyme>:</l>
        <l id="s9:l4" met="3" type="-+">O Heere mach het <rhyme label="c" type="m">sijn</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Ontfanghtse voor den <rhyme label="c" type="m" corresp="#s9:l4">wijn</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Die ick schinck mijnen <rhyme label="b" type="f" corresp="#s9:l3">Vaeder</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Mijn ooghskens <rhyme label="a" type="m">alle-bey</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Vol lieffelijck <rhyme label="a" type="m" corresp="#s10:l1">gheschrey</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Sijn als twee snelle <rhyme label="b" type="f">beken</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Nemt dan voor t'soete <rhyme label="c" type="m">melck</rhyme></l>
        <l id="s10:l5" met="3" type="-+">De traentîens die uyt <rhyme label="c" type="m" corresp="#s10:l4">elck</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Soo overvloedigh <rhyme label="b" type="f" corresp="#s10:l3">leken</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Js dit te slechten <rhyme label="a" type="m">dranck</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Soo bid' ick nemt t'in <rhyme label="a" type="m" corresp="#s11:l1">danck</rhyme></l>
        <l id="s11:l3" met="3" type="-+">Den wille voor de <rhyme label="b" type="f">gaeven</rhyme>;</l>
        <l id="s11:l4" met="3" type="-+">Want ick ben noch <rhyme label="c" type="m">gheheel</rhyme></l>
        <l id="s11:l5" met="3" type="-+">Al is het niet seer <rhyme label="c" type="m" corresp="#s11:l4">veel</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Om uwen dorst te <rhyme label="b" type="f" corresp="#s11:l3">laeven</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Mijn herte mijn <rhyme label="a" type="m">ghemoet</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Mijn leven, vlees en <rhyme label="a" type="m" corresp="#s12:l1">bloedt</rhyme></l>
        <l id="s12:l3" met="3" type="-+">Wil ick u gheerne <rhyme label="b" type="f">schincken</rhyme>;</l>
        <l id="s12:l4" met="3" type="-+">O siele, door't <rhyme label="c" type="m">ghewelt</rhyme></l>
        <l id="s12:l5" met="3" type="-+">Der soeter liefde, <rhyme label="c" type="m" corresp="#s12:l4">smelt</rhyme>;</l>
        <l id="s12:l6" met="3" type="-+">Gheeft uwen Godt te <rhyme label="b" type="f" corresp="#s12:l3">drincken</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

    <melody>Het stond een moeder rein</melody>
    <categories>
      <category translation="emotions">emoties</category>
      <category translation="seasons and annual events">jaarkring</category>
    </categories>
  <author>Aegidius Haeffacker</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">HEt stondt een Moeder <rhyme label="a" type="f">reene</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Nevens dat kruycen <rhyme label="b" type="m">houdt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Seer druckelijck in <rhyme label="a" type="f" corresp="#s1:l1">weenen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">In liefde niet <rhyme label="b" type="m" corresp="#s1:l2">verkoudt</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Met pijne <rhyme label="b" type="m" corresp="#s1:l2">menighfoudt</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Sagh sy haer Soon <rhyme label="c" type="m">eerbaer</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Hanghen als puer reyn <rhyme label="b" type="m" corresp="#s1:l2">goudt</rhyme></l>
        <l id="s1:l8" met="3" type="-+">In 't vyer des lijdens <rhyme label="c" type="m" corresp="#s1:l6">swaer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Wiens mede-lijdend' <rhyme label="a" type="f">herte</rhyme></l>
        <l id="s2:l2" met="3" type="-+">'t Sweerdt druckelijck <rhyme label="b" type="m">door-sneedt</rhyme>.</l>
        <l id="s2:l3" met="3" type="-+">Och hoe was dat in <rhyme label="a" type="f" corresp="#s2:l1">smerte</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Bedruckt, benouwt, <rhyme label="b" type="m" corresp="#s2:l2">besweet</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Wanneer soo grooten <rhyme label="b" type="m" corresp="#s2:l2">leedt</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Haer Soon <rhyme label="c" type="m">ghebenedijdt</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Wierdt aen-ghedaen, seer <rhyme label="b" type="m" corresp="#s2:l2">wreedt</rhyme>:</l>
        <l id="s2:l8" met="3" type="-+">Voor haer noyt droever <rhyme label="c" type="m" corresp="#s2:l6">tijdt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Wie isser toch op <rhyme label="a" type="f">aerden</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Die niet bedroefd soud' <rhyme label="b" type="m">zijn</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Dat hy sagh vol <rhyme label="a" type="f" corresp="#s3:l1">mee-waerden</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Des Heeren Moeder <rhyme label="b" type="m" corresp="#s3:l2">fijn</rhyme></l>
        <l id="s3:l5" met="3" type="-+">In sulck een sware <rhyme label="b" type="m" corresp="#s3:l2">pijn</rhyme>?</l>
        <l id="s3:l6" met="3" type="-+">Wien soud' het deeren <rhyme label="c" type="m">niet</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Die sagh op elck <rhyme label="b" type="m" corresp="#s3:l2">termijn</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Haer lijden en <rhyme label="c" type="m" corresp="#s3:l6">verdriet</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Om die schuldt en <rhyme label="a" type="f">misdaden</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Van al sijn volck <rhyme label="b" type="m">onvroet</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Sagh sy met druck <rhyme label="a" type="f" corresp="#s4:l1">beladen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Van hoofde tot den <rhyme label="b" type="m" corresp="#s4:l2">voet'</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Jesum, door-wondt, <rhyme label="b" type="m" corresp="#s4:l2">bebloedt</rhyme>:</l>
        <l id="s4:l6" met="3" type="-+">Sy sagh in 's drucks <rhyme label="c" type="m">foreest</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Sterven haer Soone <rhyme label="b" type="m" corresp="#s4:l2">soet</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Als hy gaf sijnen <rhyme label="c" type="m" corresp="#s4:l6">Geest</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Maria schoon <rhyme label="a" type="f">fonteyne</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Vloeydt in mijns zielen <rhyme label="b" type="m">mondt</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Met sulcken liefde <rhyme label="a" type="f" corresp="#s5:l1">reyne</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Dat ick magh oock <rhyme label="b" type="m" corresp="#s5:l2">terstondt</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Smaken in 's herten <rhyme label="b" type="m" corresp="#s5:l2">grondt</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Dit lijden swaer en <rhyme label="c" type="m">gru</rhyme>;</l>
        <l id="s5:l7" met="3" type="-+">Op dat ick soo <rhyme label="b" type="m" corresp="#s5:l2">door-wondt</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Magh weenen hier met <rhyme label="c" type="m" corresp="#s5:l6">u</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Doet toch mijn herte <rhyme label="a" type="f">branden</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Tot Godt nacht ende <rhyme label="b" type="m">dagh</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Bindt met der liefden <rhyme label="a" type="f" corresp="#s6:l1">banden</rhyme></l>
        <l id="s6:l4" met="3" type="-+">In 't hert al sijn <rhyme label="b" type="m" corresp="#s6:l2">verdragh</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Dat ick behaghen <rhyme label="b" type="m" corresp="#s6:l2">magh</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Hem soo door-wondt voor <rhyme label="c" type="m">my</rhyme>:</l>
        <l id="s6:l7" met="3" type="-+">Sijn pijne met <rhyme label="b" type="m" corresp="#s6:l2">beklagh</rhyme></l>
        <l id="s6:l8" met="3" type="-+">In my bedeeldt toch <rhyme label="c" type="m" corresp="#s6:l6">ghy</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Beweeght mijn herte <rhyme label="a" type="f">binnen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Soo langh' ick leve <rhyme label="b" type="m">kranck</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Om met u te <rhyme label="a" type="f" corresp="#s7:l1">versinnen</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Des Cruycen lijden <rhyme label="b" type="m" corresp="#s7:l2">strangh'</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">'t Is doch al mijn <rhyme label="b" type="m" corresp="#s7:l2">verlangh'</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Met een druckigh <rhyme label="c" type="m">vermaen</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Met u nemen den <rhyme label="b" type="m" corresp="#s7:l2">gangh</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Om nevens 't Cruys te <rhyme label="c" type="m" corresp="#s7:l6">staen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Der Maeghden Maeghd <rhyme label="a" type="f">verheven</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Doet my hier Christus <rhyme label="b" type="m">doodt</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Sijn passi', bitter <rhyme label="a" type="f" corresp="#s8:l1">leven</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Draghen in 't herte <rhyme label="b" type="m" corresp="#s8:l2">bloodt</rhyme>:</l>
        <l id="s8:l5" met="3" type="-+">'t Zy in vreughd oft' in <rhyme label="b" type="m" corresp="#s8:l2">noodt</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Door een liefd' <rhyme label="c" type="m">onbevleckt</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Ghedencken al d' <rhyme label="b" type="m" corresp="#s8:l2">aenstoot</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Van Godt en mensch <rhyme label="c" type="m" corresp="#s8:l6">perfeckt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Maeckt my door u toch <rhyme label="a" type="f">vyerigh</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Maegh-Moeder <rhyme label="b" type="m">excellent</rhyme>:</l>
        <l id="s9:l3" met="3" type="-+">Bevrijdt my van 't <rhyme label="a" type="f" corresp="#s9:l1">dangierigh</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Vyer, en 't eeuwigh <rhyme label="b" type="m" corresp="#s9:l2">torment</rhyme>.</l>
        <l id="s9:l5" met="3" type="-+">In mijnen lesten <rhyme label="b" type="m" corresp="#s9:l2">endt</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Met Christus Cruyce <rhyme label="c" type="m">schoon</rhyme></l>
        <l id="s9:l7" met="3" type="-+">Weest my (bid ick) <rhyme label="b" type="m" corresp="#s9:l2">omtrent</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">En voerdt na 's Hemels <rhyme label="c" type="m" corresp="#s9:l6">throon</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

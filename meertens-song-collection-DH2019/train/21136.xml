  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Goddelijcke <rhyme label="a" type="m">bant</rhyme>!</l>
        <l id="s1:l2" met="3" type="-+">Door klem van handt in <rhyme label="a" type="m" corresp="#s1:l1">handt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Onbreeckelijck <rhyme label="b" type="f">gebonden</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Soo haest de radde <rhyme label="c" type="m">tongh</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Een vrye, en losse <rhyme label="c" type="m" corresp="#s1:l4">sprongh</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Heeft tot 'et Ja <rhyme label="b" type="f" corresp="#s1:l3">gevonden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Daer blijft de wil <rhyme label="a" type="m">beknelt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En vast in een <rhyme label="a" type="m" corresp="#s2:l1">geweld'</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Van twee verliefde <rhyme label="b" type="f">herten</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Die eeuwigh zijn <rhyme label="c" type="m">bereydt</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">In alle <rhyme label="c" type="m" corresp="#s2:l4">statigheydt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Hun droeve noot te <rhyme label="b" type="f" corresp="#s2:l3">terten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">O wel-gewilde <rhyme label="a" type="m">trouw</rhyme>!</l>
        <l id="s3:l2" met="3" type="-+">Dus boeyge Man en <rhyme label="a" type="m" corresp="#s3:l1">Vrouw</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Door liefde aen <rhyme label="b" type="f">malkander</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En bintse met u <rhyme label="c" type="m">knoop</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Aen soo een wisse <rhyme label="c" type="m" corresp="#s3:l4">hoop</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Die vry is van <rhyme label="b" type="f" corresp="#s3:l3">verander</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ay! wel-vernoeghde <rhyme label="a" type="m">twee</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Groeyt door de liefd' in <rhyme label="a" type="m" corresp="#s4:l1">vree</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Ten eynde van u <rhyme label="b" type="f">leven</rhyme>:</l>
        <l id="s4:l4" met="3" type="-+">Soo sal den <rhyme label="c" type="m">Opper-vooght</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Die alle dingh <rhyme label="c" type="m" corresp="#s4:l4">be-ooght</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">V namaels vreughde <rhyme label="b" type="f" corresp="#s4:l3">geven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

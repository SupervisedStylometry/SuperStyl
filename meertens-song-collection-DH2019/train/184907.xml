<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>184907</id>
    <date>
      <year-start>1664</year-start>
      <year-end>1664</year-end>
    </date>
    <tags/>
    <melody>Psalm 068 Datheen</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">KInderkens hoort na mijn <rhyme label="a" type="m">gedicht</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Leert uyt dit liedt, want uwe <rhyme label="a" type="m" corresp="#s1:l1">plicht</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Die staet hier in <rhyme label="b" type="f">geschreven</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Hoe dat ghy tot u 'sOuders <rhyme label="c" type="m">eer</rhyme></l>
        <l id="s1:l5" met="4" type="-+">En na den wil van uwen <rhyme label="c" type="m" corresp="#s1:l4">Heer</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Voortaen behoort te <rhyme label="b" type="f" corresp="#s1:l3">leven</rhyme>,:</l>
        <l id="s1:l7" met="4" type="-+">Dat is gehoorsaem zijn en <rhyme label="c" type="m" corresp="#s1:l4">stil</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">Volbrenge Vaders, Moeders <rhyme label="c" type="m" corresp="#s1:l4">wil</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Volhert in dese <rhyme label="d" type="f">dingen</rhyme>,</l>
        <l id="s1:l10" met="4" type="-+">Dat is sijn wil, diet leven <rhyme label="e" type="m">geeft</rhyme>,</l>
        <l id="s1:l11" met="4" type="+-">'t Gebodt dat een belofte <rhyme label="e" type="m" corresp="#s1:l10">heeft</rhyme>,</l>
        <l id="s1:l12" met="3" type="-+">Wilt dit van herte <rhyme label="d" type="f" corresp="#s1:l9">singen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Schickt u van Ionghs op tot de <rhyme label="a" type="m">deught</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Laet Godts woordt sijn u hooghste <rhyme label="a" type="m" corresp="#s2:l1">vreughd</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Tot in u oude <rhyme label="b" type="f">dagen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Doet daer toe neerstigheydt en <rhyme label="c" type="m">vlijt</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">En oeffent u hier in <rhyme label="c" type="m" corresp="#s2:l4">altijdt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Soo sult ghy Godt <rhyme label="b" type="f" corresp="#s2:l3">behagen</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Die sal u geven meerder <rhyme label="c" type="m" corresp="#s2:l4">vreught</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">Als ghy hier op der Aerden <rhyme label="c" type="m" corresp="#s2:l4">meught</rhyme></l>
        <l id="s2:l9" met="3" type="-+">Ontfangen in u <rhyme label="d" type="f">leven</rhyme>,</l>
        <l id="s2:l10" met="4" type="-+">Hy is een Vader goedt en <rhyme label="e" type="m">rijck</rhyme>,</l>
        <l id="s2:l11" met="4" type="+-">Die geeft sijn Kinders <rhyme label="e" type="m" corresp="#s2:l10">algelijck</rhyme></l>
        <l id="s2:l12" met="3" type="-+">Hier na dat eeuwigh <rhyme label="d" type="f" corresp="#s2:l9">leven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">In 'thuys hier boven daer Godt <rhyme label="a" type="m">woondt</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Sal 't zijn soo Christus ons <rhyme label="a" type="m" corresp="#s3:l1">vertoondt</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Sonder eens meer te <rhyme label="b" type="f">scheyden</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Want hy is daer al langh voor <rhyme label="c" type="m">heen</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Om voor sijn volck groot ende <rhyme label="c" type="m" corresp="#s3:l4">kleen</rhyme></l>
        <l id="s3:l6" met="3" type="-+">De plaets daer te <rhyme label="b" type="f" corresp="#s3:l3">bereyden</rhyme>;</l>
        <l id="s3:l7" met="4" type="-+">Daer sult ghy altijdt zijn in <rhyme label="c" type="m" corresp="#s3:l4">vreught</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">En inder eeuwigheyt <rhyme label="c" type="m" corresp="#s3:l4">verheught</rhyme></l>
        <l id="s3:l9" met="3" type="-+">By de Engelen <rhyme label="d" type="f">schoone</rhyme>:</l>
        <l id="s3:l10" met="4" type="-+">Gelijck Koningen <rhyme label="e" type="m">triumphant</rhyme>,</l>
        <l id="s3:l11" met="4" type="+-">Met palme-tacken inde <rhyme label="e" type="m" corresp="#s3:l10">handt</rhyme>,</l>
        <l id="s3:l12" met="3" type="-+">Gekroont met s'levens <rhyme label="d" type="f" corresp="#s3:l9">kroone</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Een huys niet met hande <rhyme label="a" type="m">bereydt</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Een stadt die is van <rhyme label="a" type="m" corresp="#s4:l1">eeuwighheyt</rhyme>:</l>
        <l id="s4:l3" met="3" type="-+">Gelijck een <rhyme label="b" type="f">christalijne</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Welcke strate zijn van goude <rhyme label="c" type="m">daer</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">De stadt blinckt als een Iaspis <rhyme label="c" type="m" corresp="#s4:l4">klaer</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Sy hoeft geen <rhyme label="b" type="f" corresp="#s4:l3">Sonne-schijne</rhyme>;</l>
        <l id="s4:l7" met="4" type="-+">Dees stadt heeft twaelf poorte <rhyme label="c" type="m" corresp="#s4:l4">staen</rhyme>,</l>
        <l id="s4:l8" met="4" type="-+">Die daeghs niet werde toe <rhyme label="c" type="m" corresp="#s4:l4">gedaen</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">Want daer sal geen nacht <rhyme label="d" type="f">wesen</rhyme>:</l>
        <l id="s4:l10" met="4" type="-+">Het Lammeke en Godt zijn <rhyme label="e" type="m">daer</rhyme>,</l>
        <l id="s4:l11" met="4" type="+-">Die maeckt des stadt doorluchtig <rhyme label="e" type="m" corresp="#s4:l10">klaer</rhyme></l>
        <l id="s4:l12" met="3" type="-+">Van heerlijckheydt <rhyme label="d" type="f" corresp="#s4:l9">gepresen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Is ons den Hemel soo <rhyme label="a" type="m">vertoont</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Hoe mach Godt self zijn? die daer <rhyme label="a" type="m" corresp="#s5:l1">woont</rhyme></l>
        <l id="s5:l3" met="3" type="-+">En al des Hemels <rhyme label="b" type="f">dinge</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Geen ooge heeft 't oyt <rhyme label="c" type="m">gesien</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Dat in den Hemel sal <rhyme label="c" type="m" corresp="#s5:l4">geschien</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Van vreught en vrolijck <rhyme label="b" type="f" corresp="#s5:l3">singe</rhyme>:</l>
        <l id="s5:l7" met="4" type="-+">Daerom ghy Kinders u doch <rhyme label="c" type="m" corresp="#s5:l4">spoet</rhyme>,</l>
        <l id="s5:l8" met="4" type="-+">Verlaet het quaedt en doet dat <rhyme label="c" type="m" corresp="#s5:l4">goedt</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">Ghy sult soo saligh <rhyme label="d" type="f">sterven</rhyme>,</l>
        <l id="s5:l10" met="4" type="-+">En als de Wereldt sal <rhyme label="e" type="m">vergaen</rhyme>,</l>
        <l id="s5:l11" met="4" type="+-">Dan sult ghy sonder vreese <rhyme label="e" type="m" corresp="#s5:l10">staen</rhyme>,</l>
        <l id="s5:l12" met="3" type="-+">Dat eeuwigh leven <rhyme label="d" type="f" corresp="#s5:l9">erven</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Daerom nu elck maeckt hem <rhyme label="a" type="m">gereedt</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Bereydt met een reyn Bruylofts <rhyme label="a" type="m" corresp="#s6:l1">kleet</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Soo 't wel betaemt de <rhyme label="b" type="f">vrome</rhyme>:</l>
        <l id="s6:l4" met="4" type="-+">Wacht soo op hem met <rhyme label="c" type="m">neerstigheyt</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Als wijse Maeghden staen <rhyme label="c" type="m" corresp="#s6:l4">bereyt</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Den Bruydegom sal <rhyme label="b" type="f" corresp="#s6:l3">kome</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Op dat ghy dan meught hooren <rhyme label="c" type="m" corresp="#s6:l4">soet</rhyme></l>
        <l id="s6:l8" met="4" type="-+">Staet op, en komt mijn te <rhyme label="c" type="m" corresp="#s6:l4">gemoet</rhyme>;</l>
        <l id="s6:l9" met="3" type="-+">Och wilt het wel <rhyme label="d" type="f">versinnen</rhyme>,</l>
        <l id="s6:l10" met="4" type="-+">Die dan geen goedt hebben <rhyme label="e" type="m">gedaen</rhyme>:</l>
        <l id="s6:l11" met="4" type="+-">Die sullen moeten buyten <rhyme label="e" type="m" corresp="#s6:l10">staen</rhyme>,</l>
        <l id="s6:l12" met="3" type="-+">Als sy met hem gaen <rhyme label="d" type="f" corresp="#s6:l9">binnen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">LEt op de valsche Propheten <rhyme label="a" type="m">wel</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Die tot u komen in <rhyme label="b" type="f">Schaeps-kleeren</rhyme>:</l>
        <l id="s1:l3" met="3" type="+-">Sy zijn in haer <rhyme label="b" type="f" corresp="#s1:l2">leeren</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">Wolven wreed' en <rhyme label="a" type="m" corresp="#s1:l1">fel</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">Al hebben sy de Schrift in <rhyme label="c" type="m">handt</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Sy leggens' uyt naer 's vleesch <rhyme label="c" type="m" corresp="#s1:l5">verstandt</rhyme>:</l>
        <l id="s1:l7" met="3" type="-+">'t Is niet, dan ruyme <rhyme label="d" type="m">baen</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Daer sy af doen <rhyme label="d" type="m" corresp="#s1:l7">vermaen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">De goede wercken doen geen <rhyme label="a" type="m">baet</rhyme>:</l>
        <l id="s2:l2" met="4" type="-+">Den mensch is toch al <rhyme label="b" type="f">uytverkooren</rhyme>,</l>
        <l id="s2:l3" met="3" type="+-">Eer hy was <rhyme label="b" type="f" corresp="#s2:l2">gebooren</rhyme>:</l>
        <l id="s2:l4" met="3" type="+-">Quaet doen doet geen <rhyme label="a" type="m" corresp="#s2:l1">schaed</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Godt voor ons voldaen doch <rhyme label="c" type="m">heeft</rhyme>:</l>
        <l id="s2:l6" met="4" type="+-">'t Geloof alleen den Hemel <rhyme label="c" type="m" corresp="#s2:l5">geeft</rhyme>.</l>
        <l id="s2:l7" met="3" type="-+">Soo wieght dit mombde <rhyme label="d" type="m">Schaep</rhyme></l>
        <l id="s2:l8" met="3" type="-+">'t Eenvoudigh volck in <rhyme label="d" type="m" corresp="#s2:l7">slaep</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Wilt dan door 't uyterlijck <rhyme label="a" type="m">gelaet</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Van dees' bemombde <rhyme label="b" type="f">Schaepe-vliesen</rhyme>,</l>
        <l id="s3:l3" met="3" type="+-">Uw' ziel niet <rhyme label="b" type="f" corresp="#s3:l2">verliesen</rhyme>:</l>
        <l id="s3:l4" met="3" type="+-">'t Is maer valschen <rhyme label="a" type="m" corresp="#s3:l1">praet</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Volgt totter doodt het oude <rhyme label="c" type="m">padt</rhyme>:</l>
        <l id="s3:l6" met="4" type="+-">Hier in alleen schuylt 's Hemels <rhyme label="c" type="m" corresp="#s3:l5">schat</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">"Want Godt sal yeders <rhyme label="d" type="m">daet</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Vergelden, goet, of <rhyme label="d" type="m" corresp="#s3:l7">quaet</rhyme>.</l>
      </lg>
    </lg>
  </text>

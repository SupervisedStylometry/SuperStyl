<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>21265</id>
    <date>
      <year-start>1591</year-start>
      <year-end>1592</year-end>
    </date>
    <tags>
      <tag standard-name="schriftuurlijk lied" translation="scripture song">schriftuurlijk lied</tag>
      <tag standard-name="vermaanlied" translation="admonitory song">vermaanlied</tag>
    </tags>
    <melody>Als alle akers rijpen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Soetken Gerijts</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">AL die den Heere <rhyme label="a" type="f">soecken</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Wensch ic Gods gracy en <rhyme label="b" type="m">cracht</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Een neder hart <rhyme label="a" type="f" corresp="#s1:l1">ghebroecken</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Dat sy toch als die <rhyme label="a" type="f" corresp="#s1:l1">cloecken</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Vroom moghen strijden, dach ende <rhyme label="b" type="m" corresp="#s1:l2">nacht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Een liet moet ick v <rhyme label="a" type="f">dichten</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Also ghy hebt <rhyme label="b" type="m">begheert</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Oft yemant mochte <rhyme label="a" type="f" corresp="#s2:l1">stichten</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Die Heer wil v <rhyme label="a" type="f" corresp="#s2:l1">verlichten</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Legt al van v, wat v <rhyme label="b" type="m" corresp="#s2:l2">deert</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Hier moet ghestreden <rhyme label="a" type="f">wesen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Sullen wy vant quaet af <rhyme label="b" type="m">staen</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Des menschen hert hoort <rhyme label="a" type="f" corresp="#s3:l1">desen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Is boos also wy <rhyme label="a" type="f" corresp="#s3:l1">lesen</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Och vrienden vander Joncheyt <rhyme label="b" type="m" corresp="#s3:l2">aen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Wilt v tot strijden <rhyme label="a" type="f">setten</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Hebt moet weest niet <rhyme label="b" type="m">desperaet</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Wilt v niet meer <rhyme label="a" type="f" corresp="#s4:l1">besmetten</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Wie ist diet v can <rhyme label="a" type="f" corresp="#s4:l1">letten</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Ist dat ghy na dat goede <rhyme label="b" type="m" corresp="#s4:l2">staet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Wilt vromelijcken <rhyme label="a" type="f">strijden</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Dat harnas Gods aen <rhyme label="b" type="m">doet</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Men moet, het quaden <rhyme label="a" type="f" corresp="#s5:l1">mijden</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Goet doen Christus <rhyme label="a" type="f" corresp="#s5:l1">belijden</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Hem ouer geuen lijf ende <rhyme label="b" type="m" corresp="#s5:l2">goet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ghy moecht doch niet <rhyme label="a" type="f">betalen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Al v verloopen <rhyme label="b" type="m">tijt</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Men machse niet <rhyme label="a" type="f" corresp="#s6:l1">verhalen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Maer gheeft ghijt <rhyme label="a" type="f" corresp="#s6:l1">altemale</rhyme></l>
        <l id="s6:l5" met="4" type="-+">So wil die Heer voort schellen <rhyme label="b" type="m" corresp="#s6:l2">quijt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">En wilt nu niet <rhyme label="a" type="f">versuymen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Dees groote ghenade <rhyme label="b" type="m">doch</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Verlaet des werelts <rhyme label="a" type="f" corresp="#s7:l1">costuymen</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">V herte wilt nu <rhyme label="a" type="f" corresp="#s7:l1">ruymen</rhyme></l>
        <l id="s7:l5" met="4" type="-+">Dat Godt daer in mach wonden <rhyme label="b" type="m" corresp="#s7:l2">noch</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">En wilt nu niet <rhyme label="a" type="f">vertraghen</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Te keeren totten <rhyme label="b" type="m">Heer</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Vertreckt niet van daghe tot <rhyme label="a" type="f" corresp="#s8:l1">daghe</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Ghy soutet v <rhyme label="a" type="f" corresp="#s8:l1">beclaghen</rhyme></l>
        <l id="s8:l5" met="4" type="-+">Waect op weest wacker en slaep na <rhyme label="b" type="m" corresp="#s8:l2">meer</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Ontwaeckt ghy die daer <rhyme label="a" type="f">slapen</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Staet op al vanden <rhyme label="b" type="m">doot</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Godt sal v niet zijn <rhyme label="a" type="f" corresp="#s9:l1">schapen</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Verlichten, den sin wilt <rhyme label="a" type="f" corresp="#s9:l1">rapen</rhyme></l>
        <l id="s9:l5" met="4" type="-+">Ghy sult ontgaen den helschen <rhyme label="b" type="m" corresp="#s9:l2">noot</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Waet in dat wy <rhyme label="a" type="f">alstonden</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Eer dat wy al <rhyme label="b" type="m">ghelijck</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Die vreese Gods <rhyme label="a" type="f" corresp="#s10:l1">begonden</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Die doot ist loon der <rhyme label="a" type="f" corresp="#s10:l1">sonden</rhyme></l>
        <l id="s10:l5" met="4" type="-+">Cleyne kinderen hoort dat <rhyme label="b" type="m" corresp="#s10:l2">hemelrijck</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">So wie daer zijn <rhyme label="a" type="f">ghecomen</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Tot haren verstant <rhyme label="b" type="m">bestelt</rhyme></l>
        <l id="s11:l3" met="3" type="-+">Moet boet doen sonder <rhyme label="a" type="f" corresp="#s11:l1">roemen</rhyme></l>
        <l id="s11:l4" met="3" type="-+">En strijden als die <rhyme label="a" type="f" corresp="#s11:l1">vroomen</rhyme></l>
        <l id="s11:l5" met="4" type="-+">Het rijcke der hemelen lijt <rhyme label="b" type="m" corresp="#s11:l2">ghewelt</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Hierom heb ick te <rhyme label="a" type="f">vooren</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Vermaent al om te <rhyme label="b" type="m">strijen</rhyme></l>
        <l id="s12:l3" met="3" type="-+">Wie niet en wort <rhyme label="a" type="f" corresp="#s12:l1">herbooren</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Wt den water en gheest wilt <rhyme label="a" type="f" corresp="#s12:l1">hooren</rhyme></l>
        <l id="s12:l5" met="4" type="-+">Die en sal Gods rijcke niet <rhyme label="b" type="m" corresp="#s12:l2">sien</rhyme></l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Dees sullen moeten <rhyme label="a" type="f">blijuen</rhyme></l>
        <l id="s13:l2" met="3" type="-+">Al in dat eewighe <rhyme label="b" type="m">vier</rhyme></l>
        <l id="s13:l3" met="3" type="-+">Aenmerckt Matheus <rhyme label="a" type="f" corresp="#s13:l1">schrijuen</rhyme></l>
        <l id="s13:l4" met="3" type="-+">O Mannen ende <rhyme label="a" type="f" corresp="#s13:l1">wijuen</rhyme></l>
        <l id="s13:l5" met="4" type="-+">Neemt aen dat nieuwe <rhyme label="b" type="m" corresp="#s13:l2">hier</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Wie met Christum <rhyme label="a" type="f">verrijsen</rhyme></l>
        <l id="s14:l2" met="3" type="-+">Al in dit aersche <rhyme label="b" type="m">dal</rhyme></l>
        <l id="s14:l3" met="3" type="-+">In haren lichaem Godt <rhyme label="a" type="f" corresp="#s14:l1">prijsen</rhyme></l>
        <l id="s14:l4" met="3" type="-+">Die sullen me <rhyme label="a" type="f" corresp="#s14:l1">logijsen</rhyme></l>
        <l id="s14:l5" met="4" type="-+">In die vruecht die eewich dueren <rhyme label="b" type="m" corresp="#s14:l2">sal</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Wut dit in danck <rhyme label="a" type="f">ontfanghen</rhyme></l>
        <l id="s15:l2" met="3" type="-+">Cleyn is mijn wijsheyt <rhyme label="b" type="m">hier</rhyme></l>
        <l id="s15:l3" met="3" type="-+">Die Heer stuer uwen <rhyme label="a" type="f" corresp="#s15:l1">ganghen</rhyme></l>
        <l id="s15:l4" met="3" type="-+">Mijn hertelijcke <rhyme label="a" type="f" corresp="#s15:l1">verlanghen</rhyme></l>
        <l id="s15:l5" met="4" type="-+">Is dat v salicheyt moet <rhyme label="b" type="m" corresp="#s15:l2">gheschien</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

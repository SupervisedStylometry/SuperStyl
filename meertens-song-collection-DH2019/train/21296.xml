    <tags>
      <tag standard-name="schriftuurlijk lied" translation="scripture song">schriftuurlijk lied</tag>
    </tags>
    <melody>Een goed nieuw lied heb ik gedicht</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">BLaest de trompetten in Syon <rhyme label="a" type="m">reyn</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Ghy Godes <rhyme label="b" type="f">wtuercoren</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Ontspringt den slaep groot en <rhyme label="a" type="m" corresp="#s1:l1">cleyn</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Ghy kinderkens nieu <rhyme label="b" type="f" corresp="#s1:l2">herboren</rhyme></l>
        <l id="s1:l5" met="2" type="-+">De Princen <rhyme label="c" type="m">vraecht</rhyme></l>
        <l id="s1:l6" met="2" type="-+">De Uorsten <rhyme label="c" type="m" corresp="#s1:l5">daecht</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Wilt al het volck <rhyme label="d" type="f">vergaren</rhyme></l>
        <l id="s1:l8" met="4" type="-+">Maent nv ten strijde ionck en <rhyme label="e" type="m">oudt</rhyme></l>
        <l id="s1:l9" met="4" type="-+">Arm en rijcke, cloeck en <rhyme label="e" type="m" corresp="#s1:l8">stoudt</rhyme></l>
        <l id="s1:l10" met="3" type="-+">Wilt hier in niemant <rhyme label="d" type="f" corresp="#s1:l7">sparen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Steect op een teecken in Syons <rhyme label="a" type="m">stadt</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Laet de banieren <rhyme label="b" type="f">waeyen</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Uerheft de veruallen standaerden <rhyme label="a" type="m" corresp="#s2:l1">pladt</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Doetse op de hoochten <rhyme label="b" type="f" corresp="#s2:l2">laeyen</rhyme></l>
        <l id="s2:l5" met="2" type="-+">Op dat elck <rhyme label="c" type="m">knecht</rhyme></l>
        <l id="s2:l6" met="2" type="-+">In zijn <rhyme label="c" type="m" corresp="#s2:l5">gheuecht</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Ghemoet sou moghen <rhyme label="d" type="f">werden</rhyme></l>
        <l id="s2:l8" met="4" type="-+">Weest neerstich en cloeck in dijn <rhyme label="e" type="m">labeur</rhyme></l>
        <l id="s2:l9" met="4" type="-+">Segt dat sy ghehoopt, tot Sconincx <rhyme label="e" type="m" corresp="#s2:l8">faueur</rhyme></l>
        <l id="s2:l10" met="3" type="-+">Tsamen naer Syon <rhyme label="d" type="f" corresp="#s2:l7">terden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Uertrect wt Babel o volcken <rhyme label="a" type="m">al</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Coemt Syon helpen <rhyme label="b" type="f">bouwen</rhyme></l>
        <l id="s3:l3" met="4" type="-+">O kinders verlaet dien ouden <rhyme label="a" type="m" corresp="#s3:l1">wal</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Wilt Syons berch <rhyme label="b" type="f" corresp="#s3:l2">aenschouwen</rhyme></l>
        <l id="s3:l5" met="2" type="-+">Coemt wel <rhyme label="c" type="m">gherust</rhyme></l>
        <l id="s3:l6" met="2" type="-+">Met cloecken <rhyme label="c" type="m" corresp="#s3:l5">lust</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Men salder wel <rhyme label="d" type="f">betalen</rhyme></l>
        <l id="s3:l8" met="4" type="-+">Haer Coninck is rijcke en wel <rhyme label="e" type="m">ghestelt</rhyme></l>
        <l id="s3:l9" met="4" type="-+">Haer huysen die zijn vol goet en <rhyme label="e" type="m" corresp="#s3:l8">ghelt</rhyme></l>
        <l id="s3:l10" met="3" type="-+">Niet een en salder <rhyme label="d" type="f" corresp="#s3:l7">falen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Coemt herwaerts o kinderkens <rhyme label="a" type="m">vigoreus</rhyme></l>
        <l id="s4:l2" met="3" type="-+">En vreest voor gheen <rhyme label="b" type="f">gheruchten</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Den Coninck is Christus <rhyme label="a" type="m" corresp="#s4:l1">victorieus</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Die nv zijn cracht laet <rhyme label="b" type="f" corresp="#s4:l2">luchten</rhyme></l>
        <l id="s4:l5" met="2" type="-+">Coemt al <rhyme label="c" type="m">ghelijck</rhyme></l>
        <l id="s4:l6" met="2" type="-+">Coemt siet zijn <rhyme label="c" type="m" corresp="#s4:l5">Rijck</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Noyt schoonder stadt op <rhyme label="d" type="f">eerde</rhyme></l>
        <l id="s4:l8" met="4" type="-+">Sy is ghebout, hooch inde <rhyme label="e" type="m">lucht</rhyme></l>
        <l id="s4:l9" met="4" type="-+">Sy vreest tempeest noch oock <rhyme label="e" type="m" corresp="#s4:l8">gherucht</rhyme></l>
        <l id="s4:l10" met="3" type="-+">Sy is van hoogher <rhyme label="d" type="f" corresp="#s4:l7">weerde</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">De stadt is gheboudt, van louter <rhyme label="a" type="m">goudt</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Ghelijck den glaze <rhyme label="b" type="f">schoone</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Haer verciersel lustich, die haer <rhyme label="a" type="m" corresp="#s5:l1">aenschoudt</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Haer maecksel seer <rhyme label="b" type="f" corresp="#s5:l2">ydoone</rhyme></l>
        <l id="s5:l5" met="2" type="-+">Haer peerlen <rhyme label="c" type="m">fijn</rhyme></l>
        <l id="s5:l6" met="2" type="-+">Die daer in <rhyme label="c" type="m" corresp="#s5:l5">zijn</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Sijn van fijnen <rhyme label="d" type="f">corale</rhyme></l>
        <l id="s5:l8" met="4" type="-+">Haer straten die raeyen van claerheyt <rhyme label="e" type="m">groot</rhyme></l>
        <l id="s5:l9" met="4" type="-+">Haer gheboutte gaet bouen den goude <rhyme label="e" type="m" corresp="#s5:l8">root</rhyme></l>
        <l id="s5:l10" met="3" type="-+">En bouen den <rhyme label="d" type="f" corresp="#s5:l7">cristale</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Haer claerheyt blinct, als reyn <rhyme label="a" type="m">cristael</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Seer lustich om <rhyme label="b" type="f">taensiene</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Haer mueren die zijn seer <rhyme label="a" type="m" corresp="#s6:l1">triumphael</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Weerdich om te <rhyme label="b" type="f" corresp="#s6:l2">bediene</rhyme></l>
        <l id="s6:l5" met="2" type="-+">Daer bloeyt <rhyme label="c" type="m">certeyn</rhyme></l>
        <l id="s6:l6" met="2" type="-+">Sleuens <rhyme label="c" type="m" corresp="#s6:l5">fonteyn</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Seer schoon aen allen <rhyme label="d" type="f">zijden</rhyme></l>
        <l id="s6:l8" met="4" type="-+">Haer poorten die staen, altijt <rhyme label="e" type="m">ontdaen</rhyme></l>
        <l id="s6:l9" met="4" type="-+">Door welcke, de wtuercoornen <rhyme label="e" type="m" corresp="#s6:l8">gaen</rhyme></l>
        <l id="s6:l10" met="3" type="-+">Die Christum recht <rhyme label="d" type="f" corresp="#s6:l7">belijden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Hoort ghy die Syon noyt hebt <rhyme label="a" type="m">ghesien</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Wilt tsamen opwaert <rhyme label="b" type="f">trecken</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Daer sal sulcke een triumphe <rhyme label="a" type="m" corresp="#s7:l1">gheschien</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Als noyt in gheender <rhyme label="b" type="f" corresp="#s7:l2">plecken</rhyme></l>
        <l id="s7:l5" met="2" type="-+">Daer sal de <rhyme label="c" type="m">bruyt</rhyme></l>
        <l id="s7:l6" met="2" type="-+">Uoort comen <rhyme label="c" type="m" corresp="#s7:l5">wt</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Uerchiert met reynder <rhyme label="d" type="f">cleeren</rhyme></l>
        <l id="s7:l8" met="4" type="-+">En sal den Coninck in zijn <rhyme label="e" type="m">ghemoet</rhyme></l>
        <l id="s7:l9" met="4" type="-+">Comen met al haer maechdekens <rhyme label="e" type="m" corresp="#s7:l8">soet</rhyme></l>
        <l id="s7:l10" met="3" type="-+">Om hem daer te <rhyme label="d" type="f" corresp="#s7:l7">vereeren</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Daer sullen sy met grooter <rhyme label="a" type="m">cracht</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Babels ghewelt <rhyme label="b" type="f">verstooren</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Haer dienaers die sullen dach en <rhyme label="a" type="m" corresp="#s8:l1">nacht</rhyme></l>
        <l id="s8:l4" met="3" type="-+">De bazuynen laten <rhyme label="b" type="f" corresp="#s8:l2">hooren</rhyme></l>
        <l id="s8:l5" met="2" type="-+">Hier om <rhyme label="c" type="m">vergaert</rhyme></l>
        <l id="s8:l6" met="2" type="-+">En wort <rhyme label="c" type="m" corresp="#s8:l5">ghepaert</rhyme></l>
        <l id="s8:l7" met="3" type="-+">Coemt wilt ons dienstich <rhyme label="d" type="f">wesen</rhyme></l>
        <l id="s8:l8" met="4" type="-+">Rust v ten strijde, naer Sconincx <rhyme label="e" type="m">beuel</rhyme></l>
        <l id="s8:l9" met="4" type="-+">Al die gheheyscht zijn, die comen <rhyme label="e" type="m" corresp="#s8:l8">snel</rhyme></l>
        <l id="s8:l10" met="3" type="-+">Naer Syons stadt <rhyme label="d" type="f" corresp="#s8:l7">ghepresen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Grijpt spiesse en sweert, tis meer dan <rhyme label="a" type="m">tijt</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Den Coninck is te <rhyme label="b" type="f">lande</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Bereyt de gheschutten, tot desen <rhyme label="a" type="m" corresp="#s9:l1">strijt</rhyme></l>
        <l id="s9:l4" met="3" type="-+">En vreest noch druck noch <rhyme label="b" type="f" corresp="#s9:l2">schande</rhyme></l>
        <l id="s9:l5" met="2" type="-+">Doet op dit <rhyme label="c" type="m">pas</rhyme></l>
        <l id="s9:l6" met="2" type="-+">De schutters <rhyme label="c" type="m" corresp="#s9:l5">ras</rhyme></l>
        <l id="s9:l7" met="3" type="-+">Schieten met een <rhyme label="d" type="f">corage</rhyme></l>
        <l id="s9:l8" met="4" type="-+">Beclimt haer mueren, beloopt haer <rhyme label="e" type="m">werck</rhyme></l>
        <l id="s9:l9" met="4" type="-+">Belegt haer poorten, weest manlick <rhyme label="e" type="m" corresp="#s9:l8">sterck</rhyme></l>
        <l id="s9:l10" met="3" type="-+">Slecht haer als een <rhyme label="d" type="f" corresp="#s9:l7">boscage</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Sy moet veruallen, den dach is <rhyme label="a" type="m">by</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Haer eynde is <rhyme label="b" type="f">ghecomen</rhyme></l>
        <l id="s10:l3" met="4" type="-+">So sy ghedaen heeft Gods kinders <rhyme label="a" type="m" corresp="#s10:l1">vry</rhyme></l>
        <l id="s10:l4" met="3" type="-+">So salmen haer <rhyme label="b" type="f" corresp="#s10:l2">verdomen</rhyme></l>
        <l id="s10:l5" met="2" type="-+">Elck ionne haer <rhyme label="c" type="m">scha</rhyme></l>
        <l id="s10:l6" met="2" type="-+">Sonder <rhyme label="c" type="m" corresp="#s10:l5">ghena</rhyme></l>
        <l id="s10:l7" met="3" type="-+">Tis so Sconincx <rhyme label="d" type="f">begheeren</rhyme></l>
        <l id="s10:l8" met="4" type="-+">Cloecksinnich als kinders, steect haer aen <rhyme label="e" type="m">brant</rhyme></l>
        <l id="s10:l9" met="4" type="-+">Maect van haer cirage, een ledich <rhyme label="e" type="m" corresp="#s10:l8">lant</rhyme></l>
        <l id="s10:l10" met="3" type="-+">Wilt haer tot niet <rhyme label="d" type="f" corresp="#s10:l7">verteeren</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Prince ghy Godes kinderen <rhyme label="a" type="m">hoort</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Die hier toe zijt <rhyme label="b" type="f">gheropen</rhyme></l>
        <l id="s11:l3" met="4" type="-+">Weest cloeck ten strijde, neerstich int <rhyme label="a" type="m" corresp="#s11:l1">woort</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Coemt vry de stadt staet <rhyme label="b" type="f" corresp="#s11:l2">open</rhyme></l>
        <l id="s11:l5" met="2" type="-+">In Christo <rhyme label="c" type="m">wast</rhyme></l>
        <l id="s11:l6" met="2" type="-+">In God <rhyme label="c" type="m" corresp="#s11:l5">veruast</rhyme></l>
        <l id="s11:l7" met="3" type="-+">Uan dwoort wilt altijt <rhyme label="d" type="f">spreken</rhyme></l>
        <l id="s11:l8" met="4" type="-+">Op dat ghy Babel moecht <rhyme label="e" type="m">wederstaen</rhyme></l>
        <l id="s11:l9" met="4" type="-+">En also een eynde van haer <rhyme label="e" type="m" corresp="#s11:l8">ontfaen</rhyme></l>
        <l id="s11:l10" met="3" type="-+">Want trecht is so <rhyme label="d" type="f" corresp="#s11:l7">ghestreken</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <author>Livinus van der Minnen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">WIldy 't Minne-spel eens <rhyme label="a" type="f">leeren</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Uyt het Kaets-spel, schoone <rhyme label="b" type="m">Blom</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Soo moet gy den bal weêr <rhyme label="a" type="f" corresp="#s1:l1">keeren</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Kaetst hem naer my <rhyme label="b" type="m" corresp="#s1:l2">wederom</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Want als ick van mynder <rhyme label="c" type="f">zyden</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Maer alleen en soude <rhyme label="d" type="m">slaen</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Dat en soud' ons niet <rhyme label="c" type="f" corresp="#s1:l5">verblyden</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Want het spel waer stracx <rhyme label="d" type="m" corresp="#s1:l6">ghedaen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Weet dat kaetsen ende <rhyme label="a" type="f">minnen</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Eyscht een over-gaenden <rhyme label="b" type="m">bal</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Anders maeckt het droeve <rhyme label="a" type="f" corresp="#s2:l1">sinnen</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Anders heeft het gheenen <rhyme label="b" type="m" corresp="#s2:l2">val</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Liefde doet ons liefde <rhyme label="c" type="f">thoonen</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Liefde gheeft de liefde <rhyme label="d" type="m">kracht</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Liefde moet de liefde <rhyme label="c" type="f" corresp="#s2:l5">loonen</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Anders is sy sonder <rhyme label="d" type="m" corresp="#s2:l6">macht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Alle konsten ende <rhyme label="a" type="f">dinsten</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Die betaelt-men wel met <rhyme label="b" type="m">gelt</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Met hun onder-sproken <rhyme label="a" type="f" corresp="#s3:l1">winsten</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Is dat volck te vred' <rhyme label="b" type="m" corresp="#s3:l2">ghestelt</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Maer aen die ons liefde <rhyme label="c" type="f">thoonen</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Moet men toonen <rhyme label="d" type="m">weder-min</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Liefde moet de liefde <rhyme label="c" type="f" corresp="#s3:l5">loonen</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Want dat is den rechten <rhyme label="d" type="m" corresp="#s3:l6">sin</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Ick en moet voor u niet <rhyme label="a" type="f">singen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Al is 't dat gy singht voor <rhyme label="b" type="m">my</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Ick loon u met ander <rhyme label="a" type="f" corresp="#s4:l1">dinghen</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Met betalen ben ick <rhyme label="b" type="m" corresp="#s4:l2">vry</rhyme>;</l>
        <l id="s4:l5" met="4" type="+-">Maer soo ghy uyt al uw <rhyme label="c" type="f">sinnen</rhyme></l>
        <l id="s4:l6" met="4" type="+-">My bemindt, en liefde <rhyme label="d" type="m">biedt</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Soo moet ick u weêr <rhyme label="c" type="f" corresp="#s4:l5">beminnen</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">'t Gelt en geldt in liefde <rhyme label="d" type="m" corresp="#s4:l6">niet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">D'een Lief moet op d'ander <rhyme label="a" type="f">passen</rhyme></l>
        <l id="s5:l2" met="4" type="+-">(Want dat maect swaer lastẽ <rhyme label="b" type="m">licht</rhyme>)</l>
        <l id="s5:l3" met="4" type="+-">D'een handt die moet d'ander' <rhyme label="a" type="f" corresp="#s5:l1">wassen</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">En twee handen 't <rhyme label="b" type="m" corresp="#s5:l2">aengesicht</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Vrintschap is van wynigh' <rhyme label="c" type="f">uren</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Die maer van d'een zyd' en <rhyme label="d" type="m">komt</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Wildy liefde laten <rhyme label="c" type="f" corresp="#s5:l5">duren</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">Weest in weder-liefde <rhyme label="d" type="m" corresp="#s5:l6">promt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Nymph', beminnen wy <rhyme label="a" type="f">malkander</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Minnen is een goedt <rhyme label="b" type="m">begin</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Met d'een yser slypt-men <rhyme label="a" type="f" corresp="#s6:l1">d'ander</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">En d'een min brenght d'ander <rhyme label="b" type="m" corresp="#s6:l2">in</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Wilt de berri' samen <rhyme label="c" type="f">draghen</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Samen brengen goet, en <rhyme label="d" type="m">bloet</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">Proeft eens hoe 't u sal <rhyme label="c" type="f" corresp="#s6:l5">behaghen</rhyme></l>
        <l id="s6:l8" met="4" type="+-">Als d'een liefde d'ander <rhyme label="d" type="m" corresp="#s6:l6">voedt</rhyme>.</l>
      </lg>
    </lg>
  </text>

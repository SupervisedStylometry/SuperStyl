<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>21360</id>
    <date>
      <year-start>1591</year-start>
      <year-end>1592</year-end>
    </date>
    <tags>
      <tag standard-name="schriftuurlijk lied" translation="scripture song">schriftuurlijk lied</tag>
      <tag standard-name="vermaanlied" translation="admonitory song">vermaanlied</tag>
    </tags>
    <melody>Tien geboden</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Soetken Gerijts</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">GHenade en vree Gods gheest met <rhyme label="a" type="f">vruchten</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Wensch ick Gods volck <rhyme label="b" type="m">algemeen</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Die schaduwe deser werelt te <rhyme label="a" type="f" corresp="#s1:l1">vluchten</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Ten eynde toe vroom voort te <rhyme label="b" type="m" corresp="#s1:l2">treen</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Broeders een liet moet ic v <rhyme label="a" type="f">schencken</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Nae v begheert wt liefde <rhyme label="b" type="m">bloot</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Laet ons die goetheyt gods <rhyme label="a" type="f" corresp="#s2:l1">ghedencken</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Die ons beurijt heeft van den <rhyme label="b" type="m" corresp="#s2:l2">doot</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Dat hy zijn waerheyt ons liet <rhyme label="a" type="f">hooren</rhyme></l>
        <l id="s3:l2" met="4" type="-+">En wt den slaep der sonden <rhyme label="b" type="m">verweckt</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Doen wy doot laghen in gods <rhyme label="a" type="f" corresp="#s3:l1">tooren</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Met atter buylen seer <rhyme label="b" type="m" corresp="#s3:l2">suspeckt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Wy vinden wel dat wy doot <rhyme label="a" type="f">waren</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Door sonden en ghebreecken <rhyme label="b" type="m">veel</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Nu zijn wy met der enghelen <rhyme label="a" type="f" corresp="#s4:l1">scharen</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Ghetelt siet watten grooten <rhyme label="b" type="m" corresp="#s4:l2">scheel</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Wy hadden eewich moeten <rhyme label="a" type="f">branden</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Int vier dat niet wt blusselijck <rhyme label="b" type="m">is</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Die gherechtighe Sielen zijn in Godts <rhyme label="a" type="f" corresp="#s5:l1">handen</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Sy ghaen in seeckere rust <rhyme label="b" type="m" corresp="#s5:l2">ghewis</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Wie recht doet na Johannes <rhyme label="a" type="f">schrijuen</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Die is gherechtich so hy <rhyme label="b" type="m">seyt</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Die sonde doet man ofte <rhyme label="a" type="f" corresp="#s6:l1">wijuen</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Is wt den duyuel hoort dit <rhyme label="b" type="m" corresp="#s6:l2">bescheyt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Hoe souden wy in sonden <rhyme label="a" type="f">leuen</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Wy die die sonden ghestoruen <rhyme label="b" type="m">zijn</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Wy hebben voor ons onnosel <rhyme label="a" type="f" corresp="#s7:l1">sneeuen</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Een voorspraeck by den Vader <rhyme label="b" type="m" corresp="#s7:l2">fijn</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Wy zijn die sonden also <rhyme label="a" type="f">ghestoruen</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Dat sy ons zijn vergheuen <rhyme label="b" type="m">al</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Maer lacy die natuere <rhyme label="a" type="f" corresp="#s8:l1">bedoruen</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Is noch by ons int aertsche <rhyme label="b" type="m" corresp="#s8:l2">dal</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Geeft v tot godt ghy Christen <rhyme label="a" type="f">schapen</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Als die leuendich ghemaeckt zijn <rhyme label="b" type="m">nu</rhyme></l>
        <l id="s9:l3" met="4" type="-+">V leden geeft tot gherechtighe <rhyme label="a" type="f" corresp="#s9:l1">wapen</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Die sonden sal alsdan in <rhyme label="b" type="m" corresp="#s9:l2">v</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Verstaet niet connen <rhyme label="a" type="f">heerschappijen</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Oock staeter wandelt inden <rhyme label="b" type="m">gheest</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Ghy sult des vleesch wercken wel <rhyme label="a" type="f" corresp="#s10:l1">mijen</rhyme></l>
        <l id="s10:l4" met="4" type="-+">En niet volbrenghen soomen <rhyme label="b" type="m" corresp="#s10:l2">leest</rhyme></l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Een goeden boom also wy <rhyme label="a" type="f">vinden</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Siet die brengt goede vruchten <rhyme label="b" type="m">voort</rhyme></l>
        <l id="s11:l3" met="4" type="-+">Een quade boom can geen vruchten <rhyme label="a" type="f" corresp="#s11:l1">brengen</rhyme></l>
        <l id="s11:l4" met="4" type="-+">Verstaet  den sin van Godes <rhyme label="b" type="m" corresp="#s11:l2">woort</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Want godt en heeft doch geen <rhyme label="a" type="f">behagen</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Al aen der heydenen <rhyme label="b" type="m">offerhant</rhyme></l>
        <l id="s12:l3" met="4" type="-+">Als oock die Jooden in sonden <rhyme label="a" type="f" corresp="#s12:l1">laghen</rhyme></l>
        <l id="s12:l4" met="4" type="-+">So was haer offer voor godt tot <rhyme label="b" type="m" corresp="#s12:l2">schant</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Cornelius een godtvruchtich <rhyme label="a" type="f">heyden</rhyme></l>
        <l id="s13:l2" met="4" type="-+">Hy gaf aelmissen ende <rhyme label="b" type="m">badt</rhyme></l>
        <l id="s13:l3" met="4" type="-+">Dit quam voor godt verstaet <rhyme label="a" type="f" corresp="#s13:l1">bescheyden</rhyme></l>
        <l id="s13:l4" met="4" type="-+">Daer door hy heeft vercreghen <rhyme label="b" type="m" corresp="#s13:l2">dat</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Dat hem den Enghel dede <rhyme label="a" type="f">oorconden</rhyme></l>
        <l id="s14:l2" met="4" type="-+">Waer Petrus was also ick <rhyme label="b" type="m">raem</rhyme></l>
        <l id="s14:l3" met="4" type="-+">Daer heeft hy haestelijck om <rhyme label="a" type="f" corresp="#s14:l1">ghesonden</rhyme></l>
        <l id="s14:l4" met="4" type="-+">Hier blijckt, hy en was niet al <rhyme label="b" type="m" corresp="#s14:l2">bequaem</rhyme></l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Wie yet met vuyle handen <rhyme label="a" type="f">handelt</rhyme></l>
        <l id="s15:l2" met="4" type="-+">Vrienden maeckt hy dat niet <rhyme label="b" type="m">onreyn</rhyme></l>
        <l id="s15:l3" met="4" type="-+">So wie dat nae den vleesche <rhyme label="a" type="f" corresp="#s15:l1">wandelt</rhyme></l>
        <l id="s15:l4" met="4" type="-+">Sijn vruchten zijn gantsch vuyl <rhyme label="b" type="m" corresp="#s15:l2">gemeyn</rhyme></l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Want vleeschelijck ghesint te <rhyme label="a" type="f">wesen</rhyme></l>
        <l id="s16:l2" met="4" type="-+">Is gods vyantschap dit <rhyme label="b" type="m">verstaet</rhyme></l>
        <l id="s16:l3" met="4" type="-+">Die Heer en heeft geen lust aen <rhyme label="a" type="f" corresp="#s16:l1">desen</rhyme></l>
        <l id="s16:l4" met="4" type="-+">Noch aen die vrucht die van hem <rhyme label="b" type="m" corresp="#s16:l2">gaet</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">So comptet dat die quade <rhyme label="a" type="f">bomen</rhyme></l>
        <l id="s17:l2" met="4" type="-+">Geen goede vrucht voort brengen <rhyme label="b" type="m">noch</rhyme></l>
        <l id="s17:l3" met="4" type="-+">Die heer en reecken oock den <rhyme label="a" type="f" corresp="#s17:l1">vromen</rhyme></l>
        <l id="s17:l4" met="4" type="-+">Geen sonden toe verstaet dit <rhyme label="b" type="m" corresp="#s17:l2">toch</rhyme></l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Die so onnoselijck <rhyme label="a" type="f">versuymen</rhyme></l>
        <l id="s18:l2" met="4" type="-+">Worden met die sondaers niet <rhyme label="b" type="m">ghetelt</rhyme></l>
        <l id="s18:l3" met="4" type="-+">Maer die daer gaen op den wech <rhyme label="a" type="f" corresp="#s18:l1">ruyme</rhyme></l>
        <l id="s18:l4" met="4" type="-+">Gods toorne is op haer <rhyme label="b" type="m" corresp="#s18:l2">ghestelt</rhyme></l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">Hoe moet een yeghelijck hem <rhyme label="a" type="f">wachten</rhyme></l>
        <l id="s19:l2" met="4" type="-+">Voor Godt die alle herten <rhyme label="b" type="m">sicht</rhyme></l>
        <l id="s19:l3" met="4" type="-+">En oock voor haer die op ons <rhyme label="a" type="f" corresp="#s19:l1">achten</rhyme></l>
        <l id="s19:l4" met="4" type="-+">Want wy hier moeten zijn een <rhyme label="b" type="m" corresp="#s19:l2">licht</rhyme></l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">Een man moet wel voorstaen hoort <rhyme label="a" type="f">reden</rhyme></l>
        <l id="s20:l2" met="4" type="-+">Sijn huys en die kinderen op <rhyme label="b" type="m">voen</rhyme></l>
        <l id="s20:l3" met="4" type="-+">In onderwijsinghe en voort te <rhyme label="a" type="f" corresp="#s20:l1">treden</rhyme></l>
        <l id="s20:l4" met="4" type="-+">Een Christen heeft so veel van <rhyme label="b" type="m" corresp="#s20:l2">doen</rhyme></l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="4" type="-+">O Heere wilt onse weghen <rhyme label="a" type="f">stueren</rhyme></l>
        <l id="s21:l2" met="4" type="-+">Wat ons van noode is weet <rhyme label="b" type="m">ghy</rhyme></l>
        <l id="s21:l3" met="4" type="-+">Die kinderen heeft wel te <rhyme label="a" type="f" corresp="#s21:l1">regieren</rhyme></l>
        <l id="s21:l4" met="4" type="-+">Die mach wel toesien seg ick <rhyme label="b" type="m" corresp="#s21:l2">vrij</rhyme>.</l>
      </lg>
      <lg id="s22" type="stanza">
        <l id="s22:l1" met="4" type="-+">Die rijcken moeten hongher <rhyme label="a" type="f">lijden</rhyme></l>
        <l id="s22:l2" met="4" type="-+">Maer Godt heeft tot den zijnen <rhyme label="b" type="m">treck</rhyme></l>
        <l id="s22:l3" met="4" type="-+">Die den heere vreest in desen <rhyme label="a" type="f" corresp="#s22:l1">tijden</rhyme></l>
        <l id="s22:l4" met="4" type="-+">Die heeft aen ghenen gaet <rhyme label="b" type="m" corresp="#s22:l2">ghebreck</rhyme>.</l>
      </lg>
      <lg id="s23" type="stanza">
        <l id="s23:l1" met="4" type="-+">Nu laet ons toch niet <rhyme label="a" type="f">sollisteeren</rhyme></l>
        <l id="s23:l2" met="4" type="-+">Om rijckdom op der aerden <rhyme label="b" type="m">hier</rhyme></l>
        <l id="s23:l3" met="4" type="-+">Als wy ons voeden en <rhyme label="a" type="f" corresp="#s23:l1">geneeren</rhyme></l>
        <l id="s23:l4" met="4" type="-+">Gelt goet sal toch vergaen met <rhyme label="b" type="m" corresp="#s23:l2">vier</rhyme>.</l>
      </lg>
      <lg id="s24" type="stanza">
        <l id="s24:l1" met="4" type="-+">oncuysheyt of onreynicheit <rhyme label="a" type="f">claerlijck</rhyme></l>
        <l id="s24:l2" met="4" type="-+">Giericheyt moet niet zijn <rhyme label="b" type="m">ghenaemt</rhyme></l>
        <l id="s24:l3" met="4" type="-+">By v och vriendekens <rhyme label="a" type="f" corresp="#s24:l1">eerbaerlijck</rhyme></l>
        <l id="s24:l4" met="4" type="-+">Also den heylighen <rhyme label="b" type="m" corresp="#s24:l2">betaemt</rhyme>.</l>
      </lg>
      <lg id="s25" type="stanza">
        <l id="s25:l1" met="4" type="-+">Wat redelick is en wat wel <rhyme label="a" type="f">luydet</rhyme></l>
        <l id="s25:l2" met="4" type="-+">Daer nae wilt altoos dencken <rhyme label="b" type="m">seer</rhyme></l>
        <l id="s25:l3" met="4" type="-+">Of tvleesch zijn sorch al wat <rhyme label="a" type="f" corresp="#s25:l1">duydet</rhyme></l>
        <l id="s25:l4" met="4" type="-+">V sorghe worpt op Godt die <rhyme label="b" type="m" corresp="#s25:l2">heer</rhyme></l>
      </lg>
      <lg id="s26" type="stanza">
        <l id="s26:l1" met="4" type="-+">Die sorcht voor v wilt petrus <rhyme label="a" type="f">horen</rhyme></l>
        <l id="s26:l2" met="4" type="-+">Des heeren huys is wel <rhyme label="b" type="m">ghestut</rhyme></l>
        <l id="s26:l3" met="4" type="-+">Laet ons tot salicheyt <rhyme label="a" type="f" corresp="#s26:l1">oorbooren</rhyme></l>
        <l id="s26:l4" met="4" type="-+">Dat is tot alle dinghen <rhyme label="b" type="m" corresp="#s26:l2">nut</rhyme>.</l>
      </lg>
      <lg id="s27" type="stanza">
        <l id="s27:l1" met="4" type="-+">Ick vint my broos in dese <rhyme label="a" type="f">saecken</rhyme></l>
        <l id="s27:l2" met="4" type="-+">Bidt toch voor my begheer ick <rhyme label="b" type="m">wel</rhyme></l>
        <l id="s27:l3" met="4" type="-+">Dat ick toch vroom aent ende <rhyme label="a" type="f" corresp="#s27:l1">raecke</rhyme></l>
        <l id="s27:l4" met="4" type="-+">Mijn vrucht is cleyn mijn aert <rhyme label="b" type="m" corresp="#s27:l2">rebel</rhyme></l>
      </lg>
      <lg id="s28" type="stanza">
        <l id="s28:l1" met="4" type="-+">Nu broeders zijt den heer <rhyme label="a" type="f">beuolen</rhyme></l>
        <l id="s28:l2" met="4" type="-+">Dit slecht vermaen neemt toch in <rhyme label="b" type="m">danck</rhyme></l>
        <l id="s28:l3" met="4" type="-+">Laet ons toe sien om niet te <rhyme label="a" type="f" corresp="#s28:l1">doolen</rhyme></l>
        <l id="s28:l4" met="4" type="-+">Maer dienen Godt ons leuen <rhyme label="b" type="m" corresp="#s28:l2">lanck</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

    <tags/>
    <melody>Hoor o mensen hoor dit wonder</melody>
  <author>Petrus Verburg</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Rijke steeden daar veel <rhyme label="a" type="f">heeren</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Mit haar suit en knegts <rhyme label="a" type="f" corresp="#s1:l1">verkeeren</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Sijn dees Paters haar <rhyme label="b" type="m">Vermaak</rhyme>;</l>
        <l id="s1:l4" met="4" type="+-">Goede Wijn, en groote <rhyme label="c" type="f">huysen</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Daar wat lekkers valt te <rhyme label="c" type="f" corresp="#s1:l4">pluysen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Is by haar een groote <rhyme label="b" type="m" corresp="#s1:l3">saak</rhyme>;</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Want een Haas, een Snip, en <rhyme label="a" type="f">Lijster</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">En al 't wilt gebraat is <rhyme label="a" type="f" corresp="#s2:l1">bijster</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Altijd by haar hoog <rhyme label="b" type="m">geëert</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Hoenders, Paauwen, en <rhyme label="c" type="f">Capoenen</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Wel gebakken <rhyme label="c" type="f" corresp="#s2:l4">Venesoenen</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Worden seer van haar <rhyme label="b" type="m" corresp="#s2:l3">begeert</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Altijd dient men haar te <rhyme label="a" type="f">vreesen</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Om haar grootsheyt, soo men <rhyme label="a" type="f" corresp="#s3:l1">wesen</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Wil van haar een goede <rhyme label="b" type="m">Vrindt</rhyme>.</l>
        <l id="s3:l4" met="4" type="+-">Als sy haar Feesten <rhyme label="c" type="f">Vieren</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Maken sy seer goede <rhyme label="c" type="f" corresp="#s3:l4">cieren</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">'k Soud' ook daer mee sijn <rhyme label="b" type="m" corresp="#s3:l3">gedient</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Altijd moetens 't al door <rhyme label="a" type="f">gronden</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Wat een yeder met den <rhyme label="a" type="f" corresp="#s4:l1">monde</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Spreekt, of wat een yeder <rhyme label="b" type="m">doet</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Biegt-vaars die nieus-gierig <rhyme label="c" type="f">loeren</rhyme></l>
        <l id="s4:l5" met="4" type="+-">Prekers die veel woorde <rhyme label="c" type="f" corresp="#s4:l4">voeren</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">En Doctoren vol <rhyme label="b" type="m" corresp="#s4:l3">hoogmoet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Seer bekommert voor haar <rhyme label="a" type="f">eeren</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Seer sorgvuldig voor 't <rhyme label="a" type="f" corresp="#s5:l1">Vermeeren</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Van haar gelt en tijdelijk <rhyme label="b" type="m">goet</rhyme>.</l>
        <l id="s5:l4" met="4" type="+-">Die altijd haar selven <rhyme label="c" type="f">prijsen</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Nimmer yemant eer <rhyme label="c" type="f" corresp="#s5:l4">bewijsen</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Si. 'l letters wat een ander <rhyme label="b" type="m" corresp="#s5:l3">doet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">'T sijn uytnemers van <rhyme label="a" type="f">persoonen</rhyme>:</l>
        <l id="s6:l2" met="4" type="+-">Want sy Vleyen, streelen, <rhyme label="a" type="f" corresp="#s6:l1">loonen</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Uyt de Jeugt, die haar <rhyme label="b" type="m">behaagt</rhyme>;</l>
        <l id="s6:l4" met="4" type="+-">Maar sy slaan den dees met <rhyme label="c" type="f">roeden</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Dat hy nat is van den <rhyme label="c" type="f" corresp="#s6:l4">bloeden</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Soo word hy van haar <rhyme label="b" type="m" corresp="#s6:l3">geplaagt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Ed'le, rijke, wijse, <rhyme label="a" type="f">schoonen</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Soeken sy tot haar te <rhyme label="a" type="f" corresp="#s7:l1">troonen</rhyme>:</l>
        <l id="s7:l3" met="4" type="+-">Deesen zijn van haar <rhyme label="b" type="m">begeert</rhyme>.</l>
        <l id="s7:l4" met="4" type="+-">Soo sy soo veel gunst <rhyme label="c" type="f">verwerven</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Dat sy yemants goetjen <rhyme label="c" type="f" corresp="#s7:l4">erven</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Word, die 't nalaat, seer <rhyme label="b" type="m" corresp="#s7:l3">geëert</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Is yemant op 't poinct van <rhyme label="a" type="f">sterven</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Siet men rontsom 't bedde <rhyme label="a" type="f" corresp="#s8:l1">swerven</rhyme></l>
        <l id="s8:l3" met="4" type="+-">Engels, Duyvel, en dit <rhyme label="b" type="m">volk</rhyme>;</l>
        <l id="s8:l4" met="4" type="+-">D' eerste twee seer ernstig <rhyme label="c" type="f">loeren</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Wie van hun de ziel sal <rhyme label="c" type="f" corresp="#s8:l4">voeren</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">En sy 't gelt in hare <rhyme label="b" type="m" corresp="#s8:l3">kolk</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Sy weten het soo te <rhyme label="a" type="f">praten</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Dat de stervend 't al moet <rhyme label="a" type="f" corresp="#s9:l1">laten</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">(Onder schijn van <rhyme label="b" type="m">heyligheyt</rhyme>)</l>
        <l id="s9:l4" met="4" type="+-">Tot opbouwing van haar <rhyme label="c" type="f">kerken</rhyme>,</l>
        <l id="s9:l5" met="4" type="+-">Of tot and're sulke <rhyme label="c" type="f" corresp="#s9:l4">werken</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">Aan haar, dus word hy <rhyme label="b" type="m" corresp="#s9:l3">verleyt</rhyme>,</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">O! schijnheylige, slimme <rhyme label="a" type="f">praters</rhyme>,</l>
        <l id="s10:l2" met="4" type="+-">Loose Vossen, snoode <rhyme label="a" type="f" corresp="#s10:l1">Paters</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Op dees streken zeer <rhyme label="b" type="m">geleert</rhyme>:</l>
        <l id="s10:l4" met="4" type="+-">Onverzaagde om te <rhyme label="c" type="f">klagen</rhyme>,</l>
        <l id="s10:l5" met="4" type="+-">Seer bequaam om af te <rhyme label="c" type="f" corresp="#s10:l4">vragen</rhyme></l>
        <l id="s10:l6" met="4" type="+-">'t Geene van haar word <rhyme label="b" type="m" corresp="#s10:l3">begeert</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Sy weten soo soet te <rhyme label="a" type="f">singen</rhyme>,</l>
        <l id="s11:l2" met="4" type="+-">Dat sy trekken vreemde <rhyme label="a" type="f" corresp="#s11:l1">dingen</rhyme>,</l>
        <l id="s11:l3" met="4" type="+-">Die een ander erven <rhyme label="b" type="m">moet</rhyme>:</l>
        <l id="s11:l4" met="4" type="+-">Wilt u sonden ons <rhyme label="c" type="f">belijden</rhyme>,</l>
        <l id="s11:l5" met="4" type="+-">Hebt mit ons dog <rhyme label="c" type="f" corresp="#s11:l4">medelijden</rhyme>,</l>
        <l id="s11:l6" met="4" type="+-">Soo gy wilt het eeuwig <rhyme label="b" type="m" corresp="#s11:l3">goet</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Jesuiten sijn tog <rhyme label="a" type="f">arrem</rhyme>,</l>
        <l id="s12:l2" met="4" type="+-">Hebben in of om den <rhyme label="a" type="f" corresp="#s12:l1">arm</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">Niet of weynig, als gy <rhyme label="b" type="m">ziet</rhyme>:</l>
        <l id="s12:l4" met="4" type="+-">Laat ons tog u goederen <rhyme label="c" type="f">erven</rhyme>,</l>
        <l id="s12:l5" met="4" type="+-">Gy sult daar weer voor <rhyme label="c" type="f" corresp="#s12:l4">verwerven</rhyme></l>
        <l id="s12:l6" met="4" type="+-">Hondert fout, en minder <rhyme label="b" type="m" corresp="#s12:l3">niet</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Deese snoode <rhyme label="a" type="f">bedelaren</rhyme></l>
        <l id="s13:l2" met="4" type="+-">Schijnen offe pover <rhyme label="a" type="f" corresp="#s13:l1">waren</rhyme>,</l>
        <l id="s13:l3" met="4" type="+-">Hebbend' ondertussen <rhyme label="b" type="m">all'</rhyme>:</l>
        <l id="s13:l4" met="4" type="+-">Munten-uyt uyt and're <rhyme label="c" type="f">heeren</rhyme>,</l>
        <l id="s13:l5" met="4" type="+-">Willen dat een leek haae <rhyme label="c" type="f" corresp="#s13:l4">eere</rhyme></l>
        <l id="s13:l6" met="4" type="+-">Aandoen en bewijsen <rhyme label="b" type="m" corresp="#s13:l3">zal</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">'t Is voorwaar wel te <rhyme label="a" type="f">beklagen</rhyme>,</l>
        <l id="s14:l2" met="4" type="+-">Datse weynig sorge <rhyme label="a" type="f" corresp="#s14:l1">dragen</rhyme>,</l>
        <l id="s14:l3" met="4" type="+-">Als alleen voor 't <rhyme label="b" type="m">wereltlijk</rhyme>.</l>
        <l id="s14:l4" met="4" type="+-">Tweedracht tussen <rhyme label="c" type="f">Potentaten</rhyme>,</l>
        <l id="s14:l5" met="4" type="+-">Vorsten, Prinssen, ende <rhyme label="c" type="f" corresp="#s14:l4">Staten</rhyme>,</l>
        <l id="s14:l6" met="4" type="+-">Maken sy seer <rhyme label="b" type="m" corresp="#s14:l3">konstiglijk</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="+-">In 't geheym sy veel <rhyme label="a" type="f">verrigten</rhyme>,</l>
        <l id="s15:l2" met="4" type="+-">Veel versieren, en <rhyme label="a" type="f" corresp="#s15:l1">verdigten</rhyme>,</l>
        <l id="s15:l3" met="4" type="+-">'t Geen den Paus selfs niet en <rhyme label="b" type="m">kent</rhyme>.</l>
        <l id="s15:l4" met="4" type="+-">Veel belagchelijke <rhyme label="c" type="f">saken</rhyme>,</l>
        <l id="s15:l5" met="4" type="+-">Die sy tot mirakels <rhyme label="c" type="f" corresp="#s15:l4">maken</rhyme>,</l>
        <l id="s15:l6" met="4" type="+-">Aan die haar niet sijn <rhyme label="b" type="m" corresp="#s15:l3">gewent</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="+-">Oproer-makers, boose <rhyme label="a" type="f">wrekers</rhyme>,</l>
        <l id="s16:l2" met="4" type="+-">Phariseen, trotse <rhyme label="a" type="f" corresp="#s16:l1">Prekers</rhyme>?</l>
        <l id="s16:l3" met="4" type="+-">Sijn zy voor het grootst <rhyme label="b" type="m">gedeelt</rhyme>,</l>
        <l id="s16:l4" met="4" type="+-">Komen haar besoeken <rhyme label="c" type="f">rijken</rhyme>,</l>
        <l id="s16:l5" met="4" type="+-">Straks sy 't beentje vlijtig <rhyme label="c" type="f" corresp="#s16:l4">strijken</rhyme>:</l>
        <l id="s16:l6" met="4" type="+-">'k Ben u dienaar, maar <rhyme label="b" type="m" corresp="#s16:l3">beveelt</rhyme>,</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="+-">Soo gevangens haar yets <rhyme label="a" type="f">vragen</rhyme>,</l>
        <l id="s17:l2" met="4" type="+-">Die niets hebben aan haar <rhyme label="a" type="f" corresp="#s17:l1">klagen</rhyme>,</l>
        <l id="s17:l3" met="4" type="+-">Seggen sy wy sijn <rhyme label="b" type="m">belet</rhyme>:</l>
        <l id="s17:l4" met="4" type="+-">Daarom wilt van haar niets <rhyme label="c" type="f">vragen</rhyme>,</l>
        <l id="s17:l5" met="4" type="+-">Nog u noodt aan haar niet <rhyme label="c" type="f" corresp="#s17:l4">klagen</rhyme>,</l>
        <l id="s17:l6" met="4" type="+-">Sy sijn doof voor sulk <rhyme label="b" type="m" corresp="#s17:l3">gebedt</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="+-">Met u naasten soo te <rhyme label="a" type="f">leeven</rhyme>,</l>
        <l id="s18:l2" met="4" type="+-">Is dat na 't Gebodt <rhyme label="a" type="f" corresp="#s18:l1">gegeven</rhyme>,</l>
        <l id="s18:l3" met="4" type="+-">Van die geen, wiens naam gy <rhyme label="b" type="m">draagt</rhyme>.</l>
        <l id="s18:l4" met="4" type="+-">Liever soekt gy te <rhyme label="c" type="f">behagen</rhyme>,</l>
        <l id="s18:l5" met="4" type="+-">Die 't gesag des werelds <rhyme label="c" type="f" corresp="#s18:l4">dragen</rhyme>,</l>
        <l id="s18:l6" met="4" type="+-">Als die geenen, die u <rhyme label="b" type="m" corresp="#s18:l3">klaagt</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="+-">Schoon zy alle aardsche <rhyme label="a" type="f">saken</rhyme>,</l>
        <l id="s19:l2" met="4" type="+-">Van de Preekstoel lelijk <rhyme label="a" type="f" corresp="#s19:l1">maken</rhyme>,</l>
        <l id="s19:l3" met="4" type="+-">En te groote <rhyme label="b" type="m">gierigheyt</rhyme></l>
        <l id="s19:l4" met="4" type="+-">Striktelijk een aar <rhyme label="c" type="f">verbieden</rhyme>;</l>
        <l id="s19:l5" met="4" type="+-">Sy die nogtans niet en <rhyme label="c" type="f" corresp="#s19:l4">vlieden</rhyme>,</l>
        <l id="s19:l6" met="4" type="+-">Want in 't gelt haar herte <rhyme label="b" type="m" corresp="#s19:l3">leyt</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="+-">Huys en Hof, en vette <rhyme label="a" type="f">Landen</rhyme>,</l>
        <l id="s20:l2" met="4" type="+-">Tonnen schats, en rijke <rhyme label="a" type="f" corresp="#s20:l1">panden</rhyme></l>
        <l id="s20:l3" met="4" type="+-">Hebben sy in <rhyme label="b" type="m">overvloet</rhyme>;</l>
        <l id="s20:l4" met="4" type="+-">Sy besitten <rhyme label="c" type="f">Priorijen</rhyme>,</l>
        <l id="s20:l5" met="4" type="+-">Sy besitten rijk' <rhyme label="c" type="f" corresp="#s20:l4">Abdijen</rhyme>,</l>
        <l id="s20:l6" met="4" type="+-">En daar toe een rooden <rhyme label="b" type="m" corresp="#s20:l3">hoet</rhyme>.</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="4" type="+-">Wie kan het recht <rhyme label="a" type="f">bevatten</rhyme>?</l>
        <l id="s21:l2" met="4" type="+-">Hoe die geen die sulke <rhyme label="a" type="f" corresp="#s21:l1">schatten</rhyme></l>
        <l id="s21:l3" met="4" type="+-">Hebben, dan nog arm <rhyme label="b" type="m">zijn</rhyme>:</l>
        <l id="s21:l4" met="4" type="+-">'t Geen sy sweeren na te <rhyme label="c" type="f">komen</rhyme>,</l>
        <l id="s21:l5" met="4" type="+-">Als sy worden <rhyme label="c" type="f" corresp="#s21:l4">aangenomen</rhyme>,</l>
        <l id="s21:l6" met="4" type="+-">O devote! maar in <rhyme label="b" type="m" corresp="#s21:l3">schijn</rhyme>.</l>
      </lg>
      <lg id="s22" type="stanza">
        <l id="s22:l1" met="4" type="+-">Sy willen gebeden <rhyme label="a" type="f">wesen</rhyme>,</l>
        <l id="s22:l2" met="4" type="+-">En als grooten sijn <rhyme label="a" type="f" corresp="#s22:l1">gepresen</rhyme>;</l>
        <l id="s22:l3" met="4" type="+-">Als of alles haar wel <rhyme label="b" type="m">staat</rhyme>,</l>
        <l id="s22:l4" met="4" type="+-">Alles willen sy <rhyme label="c" type="f">regeeren</rhyme>,</l>
        <l id="s22:l5" met="4" type="+-">Dan als Paters, dan als <rhyme label="c" type="f" corresp="#s22:l4">Heeren</rhyme>,</l>
        <l id="s22:l6" met="4" type="+-">Maar regeeren 't alles <rhyme label="b" type="m" corresp="#s22:l3">quaat</rhyme>.</l>
      </lg>
      <lg id="s23" type="stanza">
        <l id="s23:l1" met="4" type="+-">Daarom wilt dees Paters <rhyme label="a" type="f">mijden</rhyme>,</l>
        <l id="s23:l2" met="4" type="+-">Wilt gy eeuwigh u <rhyme label="a" type="f" corresp="#s23:l1">verblijden</rhyme>,</l>
        <l id="s23:l3" met="4" type="+-">En sijn in een goede <rhyme label="b" type="m">staat</rhyme>:</l>
        <l id="s23:l4" met="4" type="+-">Wilt u van haar ruyme <rhyme label="c" type="f">leeren</rhyme>,</l>
        <l id="s23:l5" met="4" type="+-">Tot een beter leven <rhyme label="c" type="f" corresp="#s23:l4">keeren</rhyme>,</l>
        <l id="s23:l6" met="4" type="+-">Want haar ruyme leer is <rhyme label="b" type="m" corresp="#s23:l3">quaat</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

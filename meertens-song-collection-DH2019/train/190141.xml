  <meta>
    <id>190141</id>
    <date>
      <year-start>1705</year-start>
      <year-end>1705</year-end>
    </date>
    <location>
      <orginal-name>keulen</orginal-name>
      <standard-name>Cologne, Germany</standard-name>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">IEsus uwen naeme <rhyme label="a" type="m">goet</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Die is ons boven honick <rhyme label="a" type="m" corresp="#s1:l1">soet</rhyme></l>
        <l id="s1:l3" met="3" type="+-">T'hert den besten <rhyme label="b" type="m">wijn</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Voor alle krancken <rhyme label="b" type="m" corresp="#s1:l3">Medecijn</rhyme></l>
        <l id="s1:l5" met="4" type="+-">T'is een nectaer <rhyme label="c" type="m">delicaet</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Die allen dranck te boven <rhyme label="c" type="m" corresp="#s1:l5">gaet</rhyme></l>
        <l id="s1:l7" met="4" type="-+">Comt soeten Iesus Liefste <rhyme label="d" type="m">kindt</rhyme></l>
        <l id="s1:l8" met="4" type="-+">Beschenckt de siele die ghy <rhyme label="d" type="m" corresp="#s1:l7">bemindt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Liefde naem ghy quetst ons <rhyme label="a" type="m">hert</rhyme></l>
        <l id="s2:l2" met="4" type="-+">En doet ons lijden soeten <rhyme label="a" type="m" corresp="#s2:l1">smert</rhyme></l>
        <l id="s2:l3" met="3" type="+-">T'is u liefde <rhyme label="b" type="m">soet</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Die ons soo vrolijck quellen <rhyme label="b" type="m" corresp="#s2:l3">doet</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Wilt ghy ons ghenesen <rhyme label="c" type="m">Heer</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Soo moet ghy ons noch quetsen <rhyme label="c" type="m" corresp="#s2:l5">meer</rhyme></l>
        <l id="s2:l7" met="4" type="-+">En nemen t'hert by u soo <rhyme label="d" type="m">vast</rhyme></l>
        <l id="s2:l8" met="4" type="-+">Dat nievers anders op en <rhyme label="d" type="m" corresp="#s2:l7">past</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Treckt ons naer u liefsten <rhyme label="a" type="m">Heer</rhyme></l>
        <l id="s3:l2" met="4" type="-+">En laet ons ander trecken <rhyme label="a" type="m" corresp="#s3:l1">meer</rhyme></l>
        <l id="s3:l3" met="3" type="+-">Door u lijden <rhyme label="b" type="m">swaer</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Soo laet ons Heer u volghen <rhyme label="b" type="m" corresp="#s3:l3">naer</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Vanden stal tot aen het <rhyme label="c" type="m">Cruys</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Tot dat wy comen in u <rhyme label="c" type="m" corresp="#s3:l5">huys</rhyme></l>
        <l id="s3:l7" met="4" type="-+">Heer uwen naem <rhyme label="d" type="m">ghebenedijt</rhyme></l>
        <l id="s3:l8" met="4" type="-+">Sullen wy loven t'alder <rhyme label="d" type="m" corresp="#s3:l7">tijt</rhyme>.</l>
      </lg>
    </lg>
  </text>

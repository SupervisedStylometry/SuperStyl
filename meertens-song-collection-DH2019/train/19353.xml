  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Cristen broders <rhyme label="a" type="m">ient</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Ghy die Christum <rhyme label="a" type="m" corresp="#s1:l1">bekent</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Blijft op dat <rhyme label="a" type="m" corresp="#s1:l1">fondament</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Daer en mach als Paulus <rhyme label="b" type="m">seyt</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Gheen ander worden <rhyme label="b" type="m" corresp="#s1:l4">gheleyt</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Twelck is Christum <rhyme label="c" type="m">alleen</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Blijft vast op desen <rhyme label="c" type="m" corresp="#s1:l6">steen</rhyme></l>
        <l id="s1:l8" met="3" type="-+">En wilter niet af <rhyme label="c" type="m" corresp="#s1:l6">treen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">En treckt gheen vreemt iock <rhyme label="a" type="m">aen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Dat ghy eens hebt <rhyme label="a" type="m" corresp="#s2:l1">aenghedaen</rhyme></l>
        <l id="s2:l3" met="3" type="-+">In dat doopsel op dien blijft <rhyme label="a" type="m" corresp="#s2:l1">staen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Dat is Christus hoort zijn <rhyme label="b" type="m">woort</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Gaet daer alleen na <rhyme label="b" type="m" corresp="#s2:l4">voort</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Hy is wten hemel <rhyme label="c" type="m">ghedaelt</rhyme></l>
        <l id="s2:l7" met="3" type="-+">En hy heeft voor ons <rhyme label="c" type="m" corresp="#s2:l6">betaelt</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Die op verdiensten staet die <rhyme label="c" type="m" corresp="#s2:l6">dwaelt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Daer ons die schriftuere af <rhyme label="a" type="m">seyt</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Daer zijn wy <rhyme label="a" type="m" corresp="#s3:l1">toebereyt</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Al wt <rhyme label="a" type="m" corresp="#s3:l1">ghehoorsaemheyt</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Want wy weten dat <rhyme label="b" type="m">ghewis</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Dat onghehoorsaemheyt <rhyme label="b" type="m" corresp="#s3:l4">is</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Een sonde als <rhyme label="c" type="m">toouery</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Hoe Saul voer dat weten <rhyme label="c" type="m" corresp="#s3:l6">wy</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Doorleest den text eens <rhyme label="c" type="m" corresp="#s3:l6">vry</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Totten Hebreen <rhyme label="a" type="m">leeft</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Die voormaels Godt hebben <rhyme label="a" type="m" corresp="#s4:l1">gheureest</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Sijn door tgheloof ghehoorsaem <rhyme label="a" type="m" corresp="#s4:l1">gheweest</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Ghelijkc oock <rhyme label="b" type="m">Abraham</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Die den Soon der beloeften <rhyme label="b" type="m" corresp="#s4:l4">nam</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Hy woude hem dooden <rhyme label="c" type="m">snel</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Al na des heeren <rhyme label="c" type="m" corresp="#s4:l6">beuel</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Daer was hy toe bereyt seer <rhyme label="c" type="m" corresp="#s4:l6">wel</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Siet oock op die <rhyme label="a" type="m">schriftuer</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Sy is claer ende <rhyme label="a" type="m" corresp="#s5:l1">puer</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Wacht v voor den deesem <rhyme label="a" type="m" corresp="#s5:l1">suer</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Want Gods woorten zijn <rhyme label="b" type="m">perfect</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Wy weten ten is gheen <rhyme label="b" type="m" corresp="#s5:l4">sect</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Laet ons daer acht op <rhyme label="c" type="m">slaen</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Wy moghen daer wel <rhyme label="c" type="m" corresp="#s5:l6">opstaen</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Sy en sal ons niet <rhyme label="c" type="m" corresp="#s5:l6">versmaen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ons mach daer comen het <rhyme label="a" type="m">cruys</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Tempeesten ende <rhyme label="a" type="m" corresp="#s6:l1">ghedruys</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Dat volcht dat gheloouighe <rhyme label="a" type="m" corresp="#s6:l1">huys</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Wy en hebben hier gheen toe <rhyme label="b" type="m">tijen</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Anders dan druck en <rhyme label="b" type="m" corresp="#s6:l4">lijen</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Maer het wort ons wel <rhyme label="c" type="m">versoet</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Door Christus beloften <rhyme label="c" type="m" corresp="#s6:l6">goet</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Die verstercken ons <rhyme label="c" type="m" corresp="#s6:l6">ghemoet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Wy weten het is <rhyme label="a" type="m">bereyt</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Dat hy ons heeft <rhyme label="a" type="m" corresp="#s7:l1">toegheseyt</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Wy verwachtent met <rhyme label="a" type="m" corresp="#s7:l1">lijdsaemheyt</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Maer wy moeten door den druck eerst <rhyme label="b" type="m">gaen</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Alsoo hy oock heeft <rhyme label="b" type="m" corresp="#s7:l4">ghedaen</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Isser hooft soo voor <rhyme label="c" type="m">ghetreen</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Hoe souden anders die <rhyme label="c" type="m" corresp="#s7:l6">leen</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Want si zijn altsamen <rhyme label="c" type="m" corresp="#s7:l6">een</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Princelijcke broeders <rhyme label="a" type="m">eersaem</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Ghy zijt een <rhyme label="a" type="m" corresp="#s8:l1">lichaem</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Een ghemeynte seer <rhyme label="a" type="m" corresp="#s8:l1">bequaem</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Christus isset thooft <rhyme label="b" type="m">certeyn</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Uan zijnder ghemeenten <rhyme label="b" type="m" corresp="#s8:l4">reyn</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Hy heeftse ghereynicht <rhyme label="c" type="m">hoort</rhyme></l>
        <l id="s8:l7" met="3" type="-+">Door waterbadt int <rhyme label="c" type="m" corresp="#s8:l6">woort</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Laet ons houden eendrachtich <rhyme label="c" type="m" corresp="#s8:l6">accoort</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

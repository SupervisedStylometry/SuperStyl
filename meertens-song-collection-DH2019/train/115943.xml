    <melody>Nadien uw goddelijkheid</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Claes Stapel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">HOe zoet is d' <rhyme label="a" type="m">eenigheid</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Als men zijn God <rhyme label="a" type="m" corresp="#s1:l1">verbeid</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Om met Hem te <rhyme label="b" type="f">vereenen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">In liefde en in <rhyme label="c" type="m">trouw</rhyme>;</l>
        <l id="s1:l5" met="3" type="-+">Want Hy is tog <rhyme label="d" type="f">alleene</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Die my bevrijd van <rhyme label="c" type="m" corresp="#s1:l4">rou</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Hy is mijn zin en <rhyme label="a" type="m">wit</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Die hart en ziel <rhyme label="a" type="m" corresp="#s2:l1">bezit</rhyme>;</l>
        <l id="s2:l3" met="3" type="-+">Mijn kragt en ook mijn <rhyme label="b" type="f">leeven</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Mijn lief, mijn God, mijn <rhyme label="c" type="m">al</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">Ik heb Hem <rhyme label="d" type="f">over-geeven</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Wat 'k ben of werden <rhyme label="c" type="m" corresp="#s2:l4">zal</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Iesus is uwen <rhyme label="a" type="m">naam</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Mijn Bruidegom <rhyme label="a" type="m" corresp="#s3:l1">bequaam</rhyme>;</l>
        <l id="s3:l3" met="3" type="-+">Laat tog mijn ziele <rhyme label="b" type="f">rusten</rhyme></l>
        <l id="s3:l4" met="3" type="-+">In 't binnenst van uw <rhyme label="c" type="m">hert</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Daar naa is all' mijn <rhyme label="d" type="f">lusten</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Daar ben ik vry van <rhyme label="c" type="m" corresp="#s3:l4">smert</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Daar ben ik <rhyme label="a" type="m">on-vervaard</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Daar word ik niet <rhyme label="a" type="m" corresp="#s4:l1">beswaard</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Daar mag ik U <rhyme label="b" type="f">aanschouwen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Daar toond G' uw zoet <rhyme label="c" type="m">aanschijn</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Daar gaat Gy my <rhyme label="d" type="f">bedouwen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Laaven met Heemels <rhyme label="c" type="m" corresp="#s4:l4">wijn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Al is mijn ziel <rhyme label="a" type="m">vermoeid</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Zy nog van vreugde <rhyme label="a" type="m" corresp="#s5:l1">groeid</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Als zy geniet uw <rhyme label="b" type="f">weezen</rhyme>.</l>
        <l id="s5:l4" met="3" type="-+">Uw minnelijk <rhyme label="c" type="m">gezigt</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Dat kan het al <rhyme label="d" type="f">geneezen</rhyme>;</l>
        <l id="s5:l6" met="3" type="-+">'t Maakt alle duister <rhyme label="c" type="m" corresp="#s5:l4">ligt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Mijn lieve Harder <rhyme label="a" type="m">zoet</rhyme>!</l>
        <l id="s6:l2" met="3" type="-+">Hou mijn in uw <rhyme label="a" type="m" corresp="#s6:l1">behoed</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Hou mijn by U <rhyme label="b" type="f">verhoolen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Neem my uw schaapje <rhyme label="c" type="m">waar</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Laat het tog niet gaan <rhyme label="d" type="f">doolen</rhyme>;</l>
        <l id="s6:l6" met="3" type="-+">Want niemant ziet daar <rhyme label="c" type="m" corresp="#s6:l4">naar</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Lei Gy 't naa uwen <rhyme label="a" type="m">wil</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">'t Volgd zimpel ende <rhyme label="a" type="m" corresp="#s7:l1">stil</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Wijz het in uwe <rhyme label="b" type="f">hooven</rhyme>.</l>
        <l id="s7:l4" met="3" type="-+">Is 't U tot glori, <rhyme label="c" type="m">Heer</rhyme>!</l>
        <l id="s7:l5" met="3" type="-+">Laat my vry zijn <rhyme label="d" type="f">verschooven</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Om U mijn herts <rhyme label="c" type="m" corresp="#s7:l4">begeer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Uw liefd heeft my <rhyme label="a" type="m">gebaard</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">En uw wijsheid <rhyme label="a" type="m" corresp="#s8:l1">bewaard</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Niet om my te <rhyme label="b" type="f">verderven</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Maar om in 's Heemels <rhyme label="c" type="m">hof</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Uw zoet aanschijn te <rhyme label="d" type="f">erven</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">En zingen daar uw <rhyme label="c" type="m" corresp="#s8:l4">lof</rhyme>.</l>
      </lg>
    </lg>
  </text>

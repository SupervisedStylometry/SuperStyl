    <tags/>
    <melody>Ach wat zie ik aan de hemel</melody>
  <author>Arnold Bon</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">DRoevig <rhyme label="a" type="f">onbarmhertigheden</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Van mijn schoone <rhyme label="b" type="m">Herderin</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Die u Herte niet laat <rhyme label="a" type="f" corresp="#s1:l1">smeden</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Op het Aanbeelt van de <rhyme label="b" type="m" corresp="#s1:l2">Min</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Zie mijn tranen by de <rhyme label="a" type="f">wangen</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Neder-rollen op de <rhyme label="b" type="m">vloer</rhyme>:</l>
        <l id="s2:l3" met="4" type="+-">En zy stremmen, uit <rhyme label="a" type="f" corresp="#s2:l1">verlangen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Van u Hals, tot peerle <rhyme label="b" type="m" corresp="#s2:l2">moer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">'k Zal haar al met Gout <rhyme label="a" type="f">deurboren</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">En gebruiken tot <rhyme label="b" type="m">Cieraat</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Aan u blanken Hals, en <rhyme label="a" type="f" corresp="#s3:l1">ooren</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Ach aantrekkelijk <rhyme label="b" type="m" corresp="#s3:l2">gelaat</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Lieve Nichje schiet een <rhyme label="a" type="f">Schichje</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Van het boogjen, uit u <rhyme label="b" type="m">oog</rhyme>.</l>
        <l id="s4:l3" met="4" type="+-">Laat een vonckje uit u <rhyme label="a" type="f" corresp="#s4:l1">Lichje</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Neder dalen van om <rhyme label="b" type="m" corresp="#s4:l2">hoog</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Of misgunt gy die <rhyme label="a" type="f">genade</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Aan mijn afgepijnde <rhyme label="b" type="m">Ziel</rhyme>!</l>
        <l id="s5:l3" met="4" type="+-">Laat u Hart zich dan <rhyme label="a" type="f" corresp="#s5:l1">verzaden</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Nu ik voor u <rhyme label="b" type="m" corresp="#s5:l2">nederkniel</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Spreekt gy 't vonnis van mijn <rhyme label="a" type="f">leven</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Strijkt gy 't vonnis van mijn <rhyme label="b" type="m">doot</rhyme>?</l>
        <l id="s6:l3" met="4" type="+-">'k Sal 't u beide willig <rhyme label="a" type="f" corresp="#s6:l1">geven</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Trouwe Liefd' en acht geen <rhyme label="b" type="m" corresp="#s6:l2">noot</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Ach de Maagdelijke <rhyme label="a" type="f">lippen</rhyme>!</l>
        <l id="s7:l2" met="4" type="+-">Zijn ontsloten, wat een <rhyme label="b" type="m">geur</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Kom't'er tusschen heene <rhyme label="a" type="f" corresp="#s7:l1">slippen</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">En verquikt my deur en <rhyme label="b" type="m" corresp="#s7:l2">deur</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">'k Hoor het vonnis van mijn <rhyme label="a" type="f">ende</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Van mijn sterfdagh, ach, de <rhyme label="b" type="m">pijn</rhyme></l>
        <l id="s8:l3" met="4" type="+-">Zal niet strekken voor <rhyme label="a" type="f" corresp="#s8:l1">ellende</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">'k Wil u Wil gehoorzaem <rhyme label="b" type="m" corresp="#s8:l2">zijn</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Zie de zuiverst' <rhyme label="a" type="f">offerhanden</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Die op 't Goddelijk <rhyme label="b" type="m">altaar</rhyme></l>
        <l id="s9:l3" met="4" type="+-">Ooit van reine Liefde <rhyme label="a" type="f" corresp="#s9:l1">branden</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">En verzadig u met <rhyme label="b" type="m" corresp="#s9:l2">haar</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

    <melody>Met lusten willen wij zingen en loven dat Roomse rijk</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Jan Jansz. Deutel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HOort toe ghy menschen op der <rhyme label="a" type="f">aerden</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Die van Godt gheschapen <rhyme label="b" type="m">zijt</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">En wilt Gods woordt <rhyme label="a" type="f" corresp="#s1:l1">aenvaerden</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Houdt op van sonden, 'tis meer dan <rhyme label="b" type="m" corresp="#s1:l2">tijdt</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Hoort wat Christus sijn Iongeren gingh <rhyme label="c" type="m">bedien</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Als sy begheerden te <rhyme label="d" type="f">weten</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Wanneer den jonghsten dagh soude <rhyme label="c" type="m" corresp="#s1:l5">gheschien</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Hoort wat Christus haer <rhyme label="a" type="f">bescheyde</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">En sprack met woorden <rhyme label="b" type="m">bequaem</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Siet dat u niemandt en <rhyme label="a" type="f" corresp="#s2:l1">verleyde</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Daer salder veel komen in mijnen <rhyme label="b" type="m" corresp="#s2:l2">naem</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Segghende dat sy Christus <rhyme label="c" type="m">zijn</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Siet toe dat u niemandt en <rhyme label="d" type="f">bedrieghe</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Sprack Christus tot sijnen Apostelen <rhyme label="c" type="m" corresp="#s2:l5">fijn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Wanneer dat ghy sult <rhyme label="a" type="f">hooren</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Datter gherucht der oorlogen <rhyme label="b" type="m">gheschiet</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Dit spreeckt Christus van te <rhyme label="a" type="f" corresp="#s3:l1">vooren</rhyme>:</l>
        <l id="s3:l4" met="4" type="-+">Siet wel toe en verschrickt u <rhyme label="b" type="m" corresp="#s3:l2">niet</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Want dit moet gheschieden, verstaet wel <rhyme label="c" type="m">my</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Maer verblijdt u dan ghy <rhyme label="d" type="f">uytverkoren</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Want u verlossinghe is na <rhyme label="c" type="m" corresp="#s3:l5">by</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Pestilentie en diere <rhyme label="a" type="f">tijden</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Sullender wesen, doet Christus <rhyme label="b" type="m">vermaen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">D'een Coningh sal teghen d'ander <rhyme label="a" type="f" corresp="#s4:l1">strijden</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Dat Kindt sal teghen den Vader <rhyme label="b" type="m" corresp="#s4:l2">opstaen</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">En de Vader sal 'tleveren in de <rhyme label="c" type="m">doodt</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Want sy sullen u <rhyme label="d" type="f">benijden</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Om mijnen naem spreeckt Christus <rhyme label="c" type="m" corresp="#s4:l5">bloodt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Hoort wat ons Mattheus laet <rhyme label="a" type="f">weten</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">In 't vier-en-twintighste doet <rhyme label="b" type="m">vermaen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Hoe datter veel valsche <rhyme label="a" type="f" corresp="#s5:l1">Propheten</rhyme></l>
        <l id="s5:l4" met="4" type="-+">In de laetste tijden sullen <rhyme label="b" type="m" corresp="#s5:l2">opstaen</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Veel sullenser verleyden, soo 'tis <rhyme label="c" type="m">aenschijn</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Maer die volstandigh blijft, wilt <rhyme label="d" type="f">hooren</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Tot den eynde, die sal saligh <rhyme label="c" type="m" corresp="#s5:l5">zijn</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">d'Euangelie des rijcks <rhyme label="a" type="f">ghepresen</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Sal de Wereldt over <rhyme label="b" type="m">al</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Den volcke verkondight <rhyme label="a" type="f" corresp="#s6:l1">wesen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Eer den dagh des Heeren komen <rhyme label="b" type="m" corresp="#s6:l2">sal</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Maer veel valsche Propheten sullen <rhyme label="c" type="m">opstaen</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Om dat sy in dwalinghe souden <rhyme label="d" type="f">leyden</rhyme></l>
        <l id="s6:l7" met="4" type="-+">Godts uytverkoren, doet Christus <rhyme label="c" type="m" corresp="#s6:l5">vermaen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">De sonne sal niet meer <rhyme label="a" type="f">schijnen</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Noch de Mane zijt dies wel <rhyme label="b" type="m">vroet</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">De Sterren sullen oock <rhyme label="a" type="f" corresp="#s7:l1">verdwijnen</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Van den Hemel met der <rhyme label="b" type="m" corresp="#s7:l2">spoet</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">De menschen sullen weenen voorwaer <rhyme label="c" type="m">gheseyt</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Dan sal de Soon des menschen <rhyme label="d" type="f">komen</rhyme></l>
        <l id="s7:l7" met="4" type="-+">Met grooter kracht ende <rhyme label="c" type="m" corresp="#s7:l5">heerlijckheydt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Als dan soo sal hy <rhyme label="a" type="f">scheyden</rhyme></l>
        <l id="s8:l2" met="4" type="-+">De Schapen uyt de Bocken <rhyme label="b" type="m">voorwaer</rhyme>.</l>
        <l id="s8:l3" met="4" type="-+">Dus elck wil hem <rhyme label="a" type="f" corresp="#s8:l1">bereyden</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Dat hem dien dagh niet en valle te <rhyme label="b" type="m" corresp="#s8:l2">swaer</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Dus waeckt en bidt wie dat ghy <rhyme label="c" type="m">zijt</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Ende wilt den Heere <rhyme label="d" type="f">verbeyden</rhyme>,</l>
        <l id="s8:l7" met="4" type="-+">Want wy en weten ure noch <rhyme label="c" type="m" corresp="#s8:l5">tijdt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">'t HUw'lijck is een staet ter <rhyme label="a" type="f">eeren</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">'t Huw'lijck is een vast <rhyme label="b" type="m">gespan</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">'t Huw'lijck doet 't geslacht <rhyme label="a" type="f" corresp="#s1:l1">vermeeren</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Door de Echt van Vrouw en <rhyme label="b" type="m" corresp="#s1:l2">Man</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">'t Huw'lijck is goet, die 't met God <rhyme label="c" type="m">doet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Die de mensche heeft <rhyme label="a" type="f">geschapen</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Vyt der aerde, schiep daer <rhyme label="b" type="m">by</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Doe by Adam diep deed' <rhyme label="a" type="f" corresp="#s2:l1">slapen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Eva (mensch) uyt Adams <rhyme label="b" type="m" corresp="#s2:l2">zy</rhyme>:</l>
        <l id="s2:l5" met="4" type="-+">'t Huw'lijck is goet, die 't met God <rhyme label="c" type="m">doet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">De Man Gods in 't <rhyme label="a" type="f">propheteren</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Prijstse saligh die haer <rhyme label="b" type="m">Echt</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Houden in de vrees des <rhyme label="a" type="f" corresp="#s3:l1">Heeren</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Godes zegen haer <rhyme label="b" type="m" corresp="#s3:l2">toeseght</rhyme>:</l>
        <l id="s3:l5" met="4" type="-+">'t Huw'lijck is goet, die 't met God <rhyme label="c" type="m">doet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Hy die 't Water deed' <rhyme label="a" type="f">verkeeren</rhyme></l>
        <l id="s4:l2" met="4" type="+-">In Wijn, op de <rhyme label="b" type="m">Bruyloft-Feest</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Dede dat tot 's Huw'lijcx <rhyme label="a" type="f" corresp="#s4:l1">eeren</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Soo men in de Schriftuer <rhyme label="b" type="m" corresp="#s4:l2">leest</rhyme>:</l>
        <l id="s4:l5" met="4" type="-+">'t Huw'lijck is goet, die 't met God <rhyme label="c" type="m">doet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Om de Hoerery te <rhyme label="a" type="f">mijden</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Hebbe yeder Man sijn <rhyme label="b" type="m">Wijf</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Yeder Wijf haer Man, <rhyme label="a" type="f" corresp="#s5:l1">besijden</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Settet onlust, en <rhyme label="b" type="m" corresp="#s5:l2">gekijf</rhyme>:</l>
        <l id="s5:l5" met="4" type="-+">'t Huw'lijck is goet, die 't met God <rhyme label="c" type="m">doet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Prince die u hebt <rhyme label="a" type="f">begeven</rhyme></l>
        <l id="s6:l2" met="4" type="+-">In ders aengename <rhyme label="b" type="m">staet</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Om die salich te <rhyme label="a" type="f" corresp="#s6:l1">beleven</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Schickt u doch na Godes <rhyme label="b" type="m" corresp="#s6:l2">raet</rhyme>:</l>
        <l id="s6:l5" met="4" type="-+">'t Huw'lijck is goet, die 't met God <rhyme label="c" type="m">doet</rhyme>.</l>
      </lg>
    </lg>
  </text>

  <author>Joan Ysermans</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">WAnneer Aurora <rhyme label="a" type="m">bloot</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Schoon glansich roosen <rhyme label="a" type="m" corresp="#s1:l1">root</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Op comt uyt Amphytritons <rhyme label="a" type="m" corresp="#s1:l1">schoot</rhyme>:</l>
        <l id="s1:l4" met="2" type="-+">En Phoebus <rhyme label="b" type="m">blickt</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Mijn Vee <rhyme label="b" type="m" corresp="#s1:l4">verquickt</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">En huppelt <rhyme label="c" type="m">ras</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Langhs het groen gheclauert <rhyme label="c" type="m" corresp="#s1:l6">gras</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Mijn Bocxkens <rhyme label="a" type="m">al-te-gaer</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Loopen de Geytkens <rhyme label="a" type="m" corresp="#s2:l1">naer</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Elck soeckt met vreucht, een <rhyme label="a" type="m" corresp="#s2:l1">vvederpaer</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">Maer ick <rhyme label="b" type="m">heylaes</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Ligh' dan <rhyme label="b" type="m" corresp="#s2:l4">by-naes</rhyme></l>
        <l id="s2:l6" met="2" type="-+">Door druck <rhyme label="c" type="m">versmacht</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">In mijn diep, verlieft <rhyme label="c" type="m" corresp="#s2:l6">ghedacht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">De moeder vande <rhyme label="a" type="m">min</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Brenght my dan inden <rhyme label="a" type="m" corresp="#s3:l1">sin</rhyme></l>
        <l id="s3:l3" met="4" type="-+">De schoonheyt van mijn <rhyme label="a" type="m" corresp="#s3:l1">Herderin</rhyme></l>
        <l id="s3:l4" met="2" type="-+">En <rhyme label="b" type="m">vvreedicheyt</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">D'vvelck my <rhyme label="b" type="m" corresp="#s3:l4">bereyt</rhyme></l>
        <l id="s3:l6" met="2" type="-+">Sulck een <rhyme label="c" type="m">torment</rhyme></l>
        <l id="s3:l7" met="4" type="+-">Dat de doot sal vvesen <rhyme label="c" type="m" corresp="#s3:l6">d'ent</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Want die my geiren <rhyme label="a" type="m">siet</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Die en mach ick luchten <rhyme label="a" type="m" corresp="#s4:l1">niet</rhyme></l>
        <l id="s4:l3" met="4" type="-+">En die ick minne voor my <rhyme label="a" type="m" corresp="#s4:l1">vliet</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">Snel als een <rhyme label="b" type="m">ree</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Des ick in <rhyme label="b" type="m" corresp="#s4:l4">vvee</rhyme>,</l>
        <l id="s4:l6" met="2" type="-+">Midts ick haer <rhyme label="c" type="m">derf</rhyme></l>
        <l id="s4:l7" met="4" type="+-">Hondert duysent dooden <rhyme label="c" type="m" corresp="#s4:l6">sterf</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Vreest Nymphe dat in't <rhyme label="a" type="m">vvout</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Veel dertel Saters <rhyme label="a" type="m" corresp="#s5:l1">stout</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Haer berghen in het dickxt van't <rhyme label="a" type="m" corresp="#s5:l1">hout</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">Keert bidd' ick <rhyme label="b" type="m">keert</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">Ghy vvordt <rhyme label="b" type="m" corresp="#s5:l4">ge-eert</rhyme></l>
        <l id="s5:l6" met="2" type="-+">Van my <rhyme label="c" type="m">altijt</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Vvven dienaer eens <rhyme label="c" type="m" corresp="#s5:l6">verblijt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

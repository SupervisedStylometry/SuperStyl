    <melody>Durch Adams Fall ist ganz verderbt</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ACh Heer verhoort <rhyme label="a" type="m">rechtveerdicheyt</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Aenmercken wilt mijn <rhyme label="b" type="f">smeecken</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Mijn bidden comt al met <rhyme label="a" type="m" corresp="#s1:l1">waerheyt</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Gheen valsch mijn mont sal <rhyme label="b" type="f" corresp="#s1:l2">spreken</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Oordeelt ghy (Heer) mijn saeck <rhyme label="c" type="m">alleyn</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Opt recht laet sien dijn <rhyme label="d" type="f">ooghen</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Want u sentens' is recht end' <rhyme label="c" type="m" corresp="#s1:l5">reyn</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Gheen valscheydt condt ghy <rhyme label="d" type="f" corresp="#s1:l6">dooghen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ghy proeft mijn hert ooc in der <rhyme label="a" type="m">nacht</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Wel louter ghy my <rhyme label="b" type="f">vinden</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Mijn mont houd' ick met goede <rhyme label="a" type="m" corresp="#s2:l1">wacht</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Voor t'werck der menschen <rhyme label="b" type="f" corresp="#s2:l2">kinder</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Vast houd ick my aen dijnen <rhyme label="c" type="m">woort</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Het is my t'allen <rhyme label="d" type="f">stonden</rhyme></l>
        <l id="s2:l7" met="4" type="-+">In mijnen noot een trouw' <rhyme label="c" type="m" corresp="#s2:l5">Confoort</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Als ick wel hebb' <rhyme label="d" type="f" corresp="#s2:l6">bevonden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Mijn gang op uwen wech <rhyme label="a" type="m">behou</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Dat ick tot t mach <rhyme label="b" type="f">comen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Den rechten wech wijst wy <rhyme label="a" type="m" corresp="#s3:l1">ghetrou</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Dien wandelen die <rhyme label="b" type="f" corresp="#s3:l2">Vromen</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Ick roep tot u myn Heere <rhyme label="c" type="m">Godt</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Ghy wilt my doch <rhyme label="d" type="f">verhooren</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Merckt op mijn reden, in der <rhyme label="c" type="m" corresp="#s3:l5">noot</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">End' neycht tot my dijn <rhyme label="d" type="f" corresp="#s3:l6">ooren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Bewijst dijn goetheydt <rhyme label="a" type="m">wonderbaer</rhyme></l>
        <l id="s4:l2" met="3" type="-+">All' dien die dy <rhyme label="b" type="f">betrouwen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Want ghy haer Heylant zijt <rhyme label="a" type="m" corresp="#s4:l1">voorwaer</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Ten mach hun niet <rhyme label="b" type="f" corresp="#s4:l2">berouwen</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Als een Oog'Appel my <rhyme label="c" type="m">behoed'</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Dijn Vleughel my <rhyme label="d" type="f">bedecken</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Voor des Godloosen <rhyme label="c" type="m" corresp="#s4:l5">Overmoet</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">End all' des Vyandts <rhyme label="d" type="f" corresp="#s4:l6">Trecken</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Haer Hansen Rijck en Vet al <rhyme label="a" type="m">tsaem</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Veel stoute Reed' sy <rhyme label="b" type="f">voeren</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Omringen ons al waer wy <rhyme label="a" type="m" corresp="#s5:l1">gaen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">End' daer op stadich <rhyme label="b" type="f" corresp="#s5:l2">Loeren</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Om neer te stooten ons ter <rhyme label="c" type="m">Aerd'</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Soo grimmich en so <rhyme label="d" type="f">woede</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Als een Leeuw die den Rooff <rhyme label="c" type="m" corresp="#s5:l5">begeert</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">HEER ons daer voor <rhyme label="d" type="f" corresp="#s5:l6">behoede</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">HEer maeckt u op, verlost mijn <rhyme label="a" type="m">siel</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Verplet HEER den <rhyme label="b" type="f">Godloosen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Met dijnen Sweerde hem <rhyme label="a" type="m" corresp="#s6:l1">verniel</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Bevrijdt my van den <rhyme label="b" type="f" corresp="#s6:l2">Boosen</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Welck hebben hier in desen <rhyme label="c" type="m">Tijdt</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Haer deel, sijn satt en <rhyme label="d" type="f">moedich</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Haer Kinder hebben breet en <rhyme label="c" type="m" corresp="#s6:l5">wijt</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Die Volheyt <rhyme label="d" type="f" corresp="#s6:l6">overvloedich</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Den Kindren laten sy haer <rhyme label="a" type="m">Goet</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">T'zijn Luyde dijner <rhyme label="b" type="f">Hande</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Al hebben sy hier <rhyme label="a" type="m" corresp="#s7:l1">Overvloet</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Noch volghet Eewich <rhyme label="b" type="f" corresp="#s7:l2">schande</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Maer ick wil in <rhyme label="c" type="m">Gherechticheyt</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Dijn Aensicht vrolijck <rhyme label="d" type="f">prijsen</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">Als ick sal (nae dijn Beeld' <rhyme label="c" type="m" corresp="#s7:l5">bereyt</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">End' Eewich sat) <rhyme label="d" type="f" corresp="#s7:l6">Verrijsen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

    <melody>Rein maagdje met eer</melody>
    <categories>
      <category translation="emotions">emoties</category>
    </categories>
  <author>M. van de Speybroek</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">ALs ick ga <rhyme label="a" type="f">overdincken</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Den voorleden <rhyme label="b" type="m">tijdt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Dan begint my t' <rhyme label="a" type="f" corresp="#s1:l1">ontsincken</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Vreughde en <rhyme label="b" type="m" corresp="#s1:l2">jolijt</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Hoe dat de liefde <rhyme label="c" type="m">groot</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Die vierigh plach te <rhyme label="d" type="f">wesen</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Ja stercker dan de <rhyme label="c" type="m" corresp="#s1:l5">doodt</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Soo seer verkoudt in <rhyme label="d" type="f" corresp="#s1:l6">desen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">De helden <rhyme label="a" type="f">af-geslegen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Veel den schilt nu <rhyme label="b" type="m">zijn</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Het zaet in desen <rhyme label="a" type="f" corresp="#s2:l1">wege</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Viel, (verstaet wel <rhyme label="b" type="m" corresp="#s2:l2">mijn</rhyme>)</l>
        <l id="s2:l5" met="3" type="-+">Hebben de Vogels <rhyme label="c" type="m">ras</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Haestelijck wegh gaen <rhyme label="d" type="f">halen</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Soo dat men op dit <rhyme label="c" type="m" corresp="#s2:l5">pas</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Nu menigh Mensch siet <rhyme label="d" type="f" corresp="#s2:l6">dwalen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Het is wel te <rhyme label="a" type="f">beweenen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Dat 't aldus <rhyme label="b" type="m">toe-gaet</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Dat die bereyden <rhyme label="a" type="f" corresp="#s3:l1">steenen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Selver werden <rhyme label="b" type="m" corresp="#s3:l2">quaet</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Dat sy aen 't huys niet <rhyme label="c" type="m">meer</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Te samen willen <rhyme label="d" type="f">houwen</rhyme>:</l>
        <l id="s3:l7" met="3" type="-+">Wilt in haer storten <rhyme label="c" type="m" corresp="#s3:l5">Heer</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Een hertelijck <rhyme label="d" type="f" corresp="#s3:l6">berouwen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Die met een vyerigh <rhyme label="a" type="f">pogen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Tot anders <rhyme label="b" type="m">gewin</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Deden naer haer <rhyme label="a" type="f" corresp="#s4:l1">vermogen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Om te brengen <rhyme label="b" type="m" corresp="#s4:l2">in</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Al tot de schoone <rhyme label="c" type="m">Stadt</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Om t' samen zijn <rhyme label="d" type="f">bevonden</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Die zijn geworden <rhyme label="c" type="m" corresp="#s4:l5">madt</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Door dat bedrogh der <rhyme label="d" type="f" corresp="#s4:l6">sonden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Die haer hoop en <rhyme label="a" type="f">betrouwen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Stelden op den <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Die siet men gansch <rhyme label="a" type="f" corresp="#s5:l1">verflouwen</rhyme>;</l>
        <l id="s5:l4" met="3" type="-+">Och! of sy noch <rhyme label="b" type="m" corresp="#s5:l2">weer</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Mochten keeren tot <rhyme label="c" type="m">God</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">En beteren haer <rhyme label="d" type="f">leven</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Ja doen na sijn <rhyme label="c" type="m" corresp="#s5:l5">gebodt</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Om hem vast aen te <rhyme label="d" type="f" corresp="#s5:l6">kleven</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Wel hem die met den <rhyme label="a" type="f">Wijsen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Conversacy <rhyme label="b" type="m">maeckt</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Diens wandel is te <rhyme label="a" type="f" corresp="#s6:l1">prijsen</rhyme>;</l>
        <l id="s6:l4" met="3" type="-+">Maer die peck <rhyme label="b" type="m" corresp="#s6:l2">geraeckt</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Die sou hem daer <rhyme label="c" type="m">an</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Seer lichtelijck <rhyme label="d" type="f">besmetten</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Dus wilt doch den voet <rhyme label="c" type="m" corresp="#s6:l5">van</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Alsulcke wegen <rhyme label="d" type="f" corresp="#s6:l6">setten</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Want naer Paulus <rhyme label="a" type="f">reden</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Het quade <rhyme label="b" type="m">geklap</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Verderft de goede <rhyme label="a" type="f" corresp="#s7:l1">zeden</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Dus haer <rhyme label="b" type="m" corresp="#s7:l2">geselschap</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Hadden sy moeten <rhyme label="c" type="m">vlien</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">En van alsulcke <rhyme label="d" type="f">scheyden</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Soo waren sy door <rhyme label="c" type="m" corresp="#s7:l5">dien</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Niet komen tot <rhyme label="d" type="f" corresp="#s7:l6">verleyden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Boerten en ydel <rhyme label="a" type="f">kluchten</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Werden meest <rhyme label="b" type="m">gehoort</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">In plaetse dat 'er <rhyme label="a" type="f" corresp="#s8:l1">vruchten</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Uyt Gods heyligh <rhyme label="b" type="m" corresp="#s8:l2">Woordt</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Soude werden <rhyme label="c" type="m">gespeurt</rhyme>:</l>
        <l id="s8:l6" met="3" type="-+">Door lesen, en door <rhyme label="d" type="f">singen</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Meest een yeder <rhyme label="c" type="m" corresp="#s8:l5">labeurt</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Om wat sots voort te <rhyme label="d" type="f" corresp="#s8:l6">bringen</rhyme>,</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Maer God toch een <rhyme label="a" type="f">mishagen</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Heeft aen sulck <rhyme label="b" type="m">gebleet</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Hy doet van oude <rhyme label="a" type="f" corresp="#s9:l1">dagen</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Door Amos 't <rhyme label="b" type="m" corresp="#s9:l2">bescheet</rhyme>:</l>
        <l id="s9:l5" met="3" type="-+">Dus elck wel <rhyme label="c" type="m">overdenckt</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Sijn woorden in 't <rhyme label="d" type="f">uyt-spreken</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Dat hyse met zout <rhyme label="c" type="m" corresp="#s9:l5">mengt</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Maer men siet 't veel <rhyme label="d" type="f" corresp="#s9:l6">ontbreken</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">'t Is tijdt dat elck <rhyme label="a" type="f">genegen</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Waer na Paulus <rhyme label="b" type="m">woordt</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Al om te hebben <rhyme label="a" type="f" corresp="#s10:l1">tegen</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Dat Oordeel komt <rhyme label="b" type="m" corresp="#s10:l2">voort</rhyme></l>
        <l id="s10:l5" met="3" type="-+">In sijn herte seer <rhyme label="c" type="m">bly</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Een oprechte <rhyme label="d" type="f">consciency</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Die onver-ergert <rhyme label="c" type="m" corresp="#s10:l5">zy</rhyme></l>
        <l id="s10:l8" met="3" type="-+">Voor God en voor de <rhyme label="d" type="f" corresp="#s10:l6">Menschen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Oorlof hier mee <rhyme label="a" type="f">bevolen</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Al den Heere <rhyme label="b" type="m">zijt</rhyme>:</l>
        <l id="s11:l3" met="3" type="-+">Ick wensch haer die nu <rhyme label="a" type="f" corresp="#s11:l1">dolen</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Dat sy mochten <rhyme label="b" type="m" corresp="#s11:l2">tijdt</rhyme></l>
        <l id="s11:l5" met="3" type="-+">Hebben, om haer tot <rhyme label="c" type="m">boet</rhyme></l>
        <l id="s11:l6" met="3" type="-+">En betering, te <rhyme label="d" type="f">keeren</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">Om in genaden <rhyme label="c" type="m" corresp="#s11:l5">soet</rhyme></l>
        <l id="s11:l8" met="3" type="-+">Te komen by den <rhyme label="d" type="f" corresp="#s11:l6">Heere</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

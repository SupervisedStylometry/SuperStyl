  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">ELck coemt tot <rhyme label="a" type="m">my</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Die last draecht <rhyme label="b" type="f">oueruloedich</rhyme></l>
        <l id="s1:l3" met="2" type="-+">Roept Christus <rhyme label="a" type="m" corresp="#s1:l1">bly</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Ick wil v troosten <rhyme label="b" type="f" corresp="#s1:l2">spoedich</rhyme></l>
        <l id="s1:l5" met="2" type="-+">Behoedich, <rhyme label="b" type="f" corresp="#s1:l2">sachtmoedich</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Wilt hy tbedructe volck <rhyme label="c" type="m">ontfaen</rhyme></l>
        <l id="s1:l7" met="2" type="-+">Staet hem al <rhyme label="c" type="m" corresp="#s1:l6">aen</rhyme></l>
        <l id="s1:l8" met="4" type="-+">Gaet toe, hy neemt op hem al v <rhyme label="d" type="f">sonden</rhyme></l>
        <l id="s1:l9" met="2" type="-+">Ende en wilt niet <rhyme label="c" type="m" corresp="#s1:l6">gaen</rhyme></l>
        <l id="s1:l10" met="2" type="+-">Totten valschen <rhyme label="c" type="m" corresp="#s1:l6">waen</rhyme></l>
        <l id="s1:l11" met="3" type="-+">In hem wort troost <rhyme label="d" type="f" corresp="#s1:l8">gheuonden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Hy is den <rhyme label="a" type="m">wech</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Die waerheyt, en <rhyme label="b" type="f">tleuen</rhyme></l>
        <l id="s2:l3" met="2" type="-+">Maect gheen <rhyme label="a" type="m" corresp="#s2:l1">ghesech</rhyme></l>
        <l id="s2:l4" met="3" type="-+">U sonden zijn <rhyme label="b" type="f" corresp="#s2:l2">vergheuen</rhyme></l>
        <l id="s2:l5" met="2" type="-+">Om <rhyme label="b" type="f" corresp="#s2:l2">tbeuen</rhyme></l>
        <l id="s2:l6" met="4" type="-+">En <rhyme label="c" type="m">tsneuen</rhyme></l>
        <l id="s2:l7" met="2" type="-+">Der sondaers hy hier neder <rhyme label="c" type="m" corresp="#s2:l6">quam</rhyme></l>
        <l id="s2:l8" met="4" type="-+">Die doot aen <rhyme label="d" type="f">nam</rhyme></l>
        <l id="s2:l9" met="2" type="-+">Dies hy voldede der sonden <rhyme label="c" type="m" corresp="#s2:l6">pijne</rhyme></l>
        <l id="s2:l10" met="2" type="+-">Tonschuldich Lam int bloet <rhyme label="c" type="m" corresp="#s2:l6">verswam</rhyme></l>
        <l id="s2:l11" met="3" type="-+">Om tsondaers troost te <rhyme label="d" type="f" corresp="#s2:l8">zijne</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Kent Gode <rhyme label="a" type="m">schult</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Hy sal hem ws <rhyme label="b" type="f">ontfermen</rhyme></l>
        <l id="s3:l3" met="2" type="-+">Door zijn <rhyme label="a" type="m" corresp="#s3:l1">ghedult</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Dan hoort hy tsondaers <rhyme label="b" type="f" corresp="#s3:l2">kermen</rhyme></l>
        <l id="s3:l5" met="2" type="-+">Den armen, <rhyme label="b" type="f" corresp="#s3:l2">beschermen</rhyme></l>
        <l id="s3:l6" met="4" type="-+">Dats Christus werck, vaet mijn <rhyme label="c" type="m">bedien</rhyme></l>
        <l id="s3:l7" met="2" type="-+">Wilt tot hem <rhyme label="c" type="m" corresp="#s3:l6">vlien</rhyme></l>
        <l id="s3:l8" met="4" type="-+">En wilt v seluen gansch <rhyme label="d" type="f">versaken</rhyme></l>
        <l id="s3:l9" met="2" type="-+">Hy sal v <rhyme label="c" type="m" corresp="#s3:l6">belien</rhyme></l>
        <l id="s3:l10" met="2" type="+-">Hem seluen <rhyme label="c" type="m" corresp="#s3:l6">bien</rhyme></l>
        <l id="s3:l11" met="3" type="-+">Dat sal v salich <rhyme label="d" type="f" corresp="#s3:l8">maken</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Prince <rhyme label="a" type="m">bewijst</rhyme></l>
        <l id="s4:l2" met="3" type="-+">U duecht naer Schriften <rhyme label="b" type="f">leeren</rhyme></l>
        <l id="s4:l3" met="2" type="-+">Uant quade <rhyme label="a" type="m" corresp="#s4:l1">rijst</rhyme></l>
        <l id="s4:l4" met="3" type="-+">En wilt tot liefden <rhyme label="b" type="f" corresp="#s4:l2">keeren</rhyme></l>
        <l id="s4:l5" met="2" type="-+">Ter eeren, ons <rhyme label="b" type="f" corresp="#s4:l2">Heeren</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Die voor ons aenden cruys <rhyme label="c" type="m">volde</rhyme></l>
        <l id="s4:l7" met="2" type="-+">Waect in <rhyme label="c" type="m" corresp="#s4:l6">ghebe</rhyme></l>
        <l id="s4:l8" met="4" type="-+">En leeft als Christen leuen <rhyme label="d" type="f">souwen</rhyme></l>
        <l id="s4:l9" met="2" type="-+">Sijn bloet hout <rhyme label="c" type="m" corresp="#s4:l6">ste</rhyme></l>
        <l id="s4:l10" met="2" type="+-">Dit is ons <rhyme label="c" type="m" corresp="#s4:l6">vre</rhyme></l>
        <l id="s4:l11" met="3" type="-+">Stelt daer inne v <rhyme label="d" type="f" corresp="#s4:l8">betrouwen</rhyme>.</l>
      </lg>
    </lg>
  </text>

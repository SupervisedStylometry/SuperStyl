  <author>Joannes Cloeck</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Ey laat ons oock eens vrolijck <rhyme label="a" type="m">zijn</rhyme>!</l>
        <l id="s1:l2" met="3" type="-+">En d’arme <rhyme label="b" type="f">wereldlingen</rhyme></l>
        <l id="s1:l3" met="3" type="+-">Die in slechte <rhyme label="b" type="f" corresp="#s1:l2">dingen</rhyme></l>
        <l id="s1:l4" met="3" type="+-">Die gansch olijck <rhyme label="a" type="m" corresp="#s1:l1">zijn</rhyme></l>
        <l id="s1:l5" met="3" type="+-">Bly zijn zonder <rhyme label="c" type="f">maaten</rhyme></l>
        <l id="s1:l6" met="3" type="+-">‘t Welck doch niet <rhyme label="d" type="m">gedijt</rhyme>,</l>
        <l id="s1:l7" met="3" type="+-">Niet te goede <rhyme label="c" type="f" corresp="#s1:l5">laaten</rhyme>,</l>
        <l id="s1:l8" met="3" type="+-">Maar tot ‘s werelds <rhyme label="d" type="m" corresp="#s1:l6">spijt</rhyme></l>
        <l id="s1:l9" met="3" type="-+">In God recht zijn <rhyme label="d" type="m" corresp="#s1:l6">verblijt</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Immers is het uytnemend <rhyme label="a" type="m">zoet</rhyme>?</l>
        <l id="s2:l2" met="3" type="-+">Dat zomtijds oock de <rhyme label="b" type="f">vroomen</rhyme></l>
        <l id="s2:l3" met="3" type="+-">Oock eens samen <rhyme label="b" type="f" corresp="#s2:l2">komen</rhyme></l>
        <l id="s2:l4" met="3" type="+-">Met een bly <rhyme label="a" type="m" corresp="#s2:l1">gemoet</rhyme>,</l>
        <l id="s2:l5" met="3" type="+-">Om met hoog’re <rhyme label="c" type="f">zaacken</rhyme></l>
        <l id="s2:l6" met="3" type="+-">En bet’re <rhyme label="d" type="m">geneugt</rhyme>,</l>
        <l id="s2:l7" met="3" type="+-">Haar vrolijck te <rhyme label="c" type="f" corresp="#s2:l5">maacken</rhyme>,</l>
        <l id="s2:l8" met="3" type="+-">Wat is dat een <rhyme label="d" type="m" corresp="#s2:l6">vreugt</rhyme>?</l>
        <l id="s2:l9" met="3" type="-+">Hoe zijn zy dan <rhyme label="d" type="m" corresp="#s2:l6">verheugt</rhyme>!</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Kom laat ons dan op onze <rhyme label="a" type="m">wijs</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Zonder angst en <rhyme label="b" type="f">vrese</rhyme>,</l>
        <l id="s3:l3" met="3" type="+-">Lustig vrolijck <rhyme label="b" type="f" corresp="#s3:l2">wese</rhyme></l>
        <l id="s3:l4" met="3" type="+-">Tot Gods eer en <rhyme label="a" type="m" corresp="#s3:l1">prijs</rhyme>:</l>
        <l id="s3:l5" met="3" type="+-">Licht is voor <rhyme label="c" type="f">d’oprechten</rhyme>,</l>
        <l id="s3:l6" met="3" type="+-">Vreughde <rhyme label="d" type="m">toebereyt</rhyme></l>
        <l id="s3:l7" met="3" type="+-">Voor die, die Gods <rhyme label="c" type="f" corresp="#s3:l5">rechten</rhyme></l>
        <l id="s3:l8" met="3" type="+-">Houd in <rhyme label="d" type="m" corresp="#s3:l6">heyligheyd</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Die isse <rhyme label="d" type="m" corresp="#s3:l6">toegeseyd</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Wat meent gy arme <rhyme label="a" type="m">wereldling</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Om dat wy niet als <rhyme label="b" type="f">dwasen</rhyme></l>
        <l id="s4:l3" met="3" type="+-">Lachen, tieren, <rhyme label="b" type="f" corresp="#s4:l2">rasen</rhyme>,</l>
        <l id="s4:l4" met="3" type="+-">Maar ick my <rhyme label="a" type="m" corresp="#s4:l1">bedwing</rhyme></l>
        <l id="s4:l5" met="3" type="+-">Van die <rhyme label="c" type="f">zotternyen</rhyme></l>
        <l id="s4:l6" met="3" type="+-">Die ick acht en <rhyme label="d" type="m">meen</rhyme></l>
        <l id="s4:l7" met="3" type="+-">Dat een Christen <rhyme label="c" type="f" corresp="#s4:l5">myen</rhyme></l>
        <l id="s4:l8" met="3" type="+-">Moet, dat daarom <rhyme label="d" type="m" corresp="#s4:l6">geen</rhyme></l>
        <l id="s4:l9" met="3" type="-+">Vreught by ons zy? ô <rhyme label="d" type="m" corresp="#s4:l6">neen</rhyme>!</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Een Hemeling kan vrolijck <rhyme label="a" type="m">zijn</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Ja kan zelfs lustig <rhyme label="b" type="f">zingen</rhyme>,</l>
        <l id="s5:l3" met="3" type="+-">En van vreught <rhyme label="b" type="f" corresp="#s5:l2">opspringen</rhyme>,</l>
        <l id="s5:l4" met="3" type="+-">Zonder bier of <rhyme label="a" type="m" corresp="#s5:l1">wijn</rhyme>;</l>
        <l id="s5:l5" met="3" type="+-">Die een goe <rhyme label="c" type="f">gewisse</rhyme></l>
        <l id="s5:l6" met="3" type="+-">Binnen in hem <rhyme label="d" type="m">heeft</rhyme></l>
        <l id="s5:l7" met="3" type="+-">Kan geen vreugde <rhyme label="c" type="f" corresp="#s5:l5">misse</rhyme>,</l>
        <l id="s5:l8" met="3" type="+-">Want de deught die <rhyme label="d" type="m" corresp="#s5:l6">geeft</rhyme></l>
        <l id="s5:l9" met="3" type="-+">Dat hy steeds feest’lijck <rhyme label="d" type="m" corresp="#s5:l6">leeft</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Daar is op aarden niemand <rhyme label="a" type="m">niet</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Die zoo vrolijck en <rhyme label="b" type="f">lustig</rhyme>,</l>
        <l id="s6:l3" met="3" type="+-">Wel-gemoed, en <rhyme label="b" type="f" corresp="#s6:l2">rustig</rhyme>,</l>
        <l id="s6:l4" met="3" type="+-">Meerder vreugt <rhyme label="a" type="m" corresp="#s6:l1">geniet</rhyme>,</l>
        <l id="s6:l5" met="3" type="+-">Als die altijd <rhyme label="c" type="f">pogen</rhyme></l>
        <l id="s6:l6" met="3" type="+-">Hoe zy <rhyme label="d" type="m">heilighlijck</rhyme></l>
        <l id="s6:l7" met="3" type="+-">God behagen <rhyme label="c" type="f" corresp="#s6:l5">mogen</rhyme>,</l>
        <l id="s6:l8" met="3" type="+-">‘t Hemels <rhyme label="d" type="m" corresp="#s6:l6">Coninck-rijck</rhyme></l>
        <l id="s6:l9" met="3" type="-+">Is in haar <rhyme label="d" type="m" corresp="#s6:l6">innerlijck</rhyme>!</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Wat vreugt genieten zy te <rhyme label="a" type="m">zaam</rhyme>?</l>
        <l id="s7:l2" met="3" type="-+">Als zy een gespreck <rhyme label="b" type="f">maacken</rhyme>,</l>
        <l id="s7:l3" met="3" type="+-">Van Hemelsche <rhyme label="b" type="f" corresp="#s7:l2">zaacken</rhyme>,</l>
        <l id="s7:l4" met="3" type="+-">Wat is ‘t <rhyme label="a" type="m" corresp="#s7:l1">aangenaam</rhyme>?</l>
        <l id="s7:l5" met="3" type="+-">‘t Kan de ziele <rhyme label="c" type="f">roeren</rhyme>,</l>
        <l id="s7:l6" met="3" type="+-">‘t Werckt ick weet niet <rhyme label="d" type="m">hoe</rhyme>,</l>
        <l id="s7:l7" met="3" type="+-">Het kan my <rhyme label="c" type="f" corresp="#s7:l5">vervoeren</rhyme></l>
        <l id="s7:l8" met="3" type="+-">Na den Hemel <rhyme label="d" type="m" corresp="#s7:l6">toe</rhyme>,</l>
        <l id="s7:l9" met="3" type="-+">Ick word niet lichtelijck <rhyme label="d" type="m" corresp="#s7:l6">moe</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Wie zoud’ niet al zijn aardsch <rhyme label="a" type="m">vermaack</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Zijn slapen, drincken, <rhyme label="b" type="f">eten</rhyme>,</l>
        <l id="s8:l3" met="3" type="+-">Lichtelijck <rhyme label="b" type="f" corresp="#s8:l2">vergeten</rhyme>,</l>
        <l id="s8:l4" met="3" type="+-">Voor dees’ <rhyme label="a" type="m" corresp="#s8:l1">zamenspraack</rhyme>?</l>
        <l id="s8:l5" met="3" type="+-">‘k Heb noyt bet’re <rhyme label="c" type="f">stonden</rhyme></l>
        <l id="s8:l6" met="3" type="+-">Voor mijn ziel <rhyme label="d" type="m">gehad</rhyme>,</l>
        <l id="s8:l7" met="3" type="+-">Maar dickwils <rhyme label="c" type="f" corresp="#s8:l5">bevonden</rhyme></l>
        <l id="s8:l8" met="3" type="+-">In het spreecken, <rhyme label="d" type="m" corresp="#s8:l6">dat</rhyme></l>
        <l id="s8:l9" met="3" type="-+">De tijt verliep te <rhyme label="d" type="m" corresp="#s8:l6">rat</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Een uer is dan maar een <rhyme label="a" type="m">minuyt</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">De tijd die is <rhyme label="b" type="f">verloopen</rhyme>,</l>
        <l id="s9:l3" met="3" type="+-">En <rhyme label="b" type="f" corresp="#s9:l2">verby-gesloopen</rhyme>,</l>
        <l id="s9:l4" met="3" type="+-">Eer ‘t gespreck is <rhyme label="a" type="m" corresp="#s9:l1">uyt</rhyme>;</l>
        <l id="s9:l5" met="3" type="+-">O dat yeder <rhyme label="c" type="f">ure</rhyme></l>
        <l id="s9:l6" met="3" type="+-">Dan een dagh mocht <rhyme label="d" type="m">zijn</rhyme>!</l>
        <l id="s9:l7" met="3" type="+-">En wat lang mocht <rhyme label="c" type="f" corresp="#s9:l5">dure</rhyme>,</l>
        <l id="s9:l8" met="3" type="+-">‘t Is my zulcken <rhyme label="d" type="m" corresp="#s9:l6">pijn</rhyme>!</l>
        <l id="s9:l9" met="3" type="-+">Daar moet gescheyden <rhyme label="d" type="m" corresp="#s9:l6">zijn</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Weg! weg met het godloose <rhyme label="a" type="m">rot</rhyme>!</l>
        <l id="s10:l2" met="3" type="-+">‘k Kan onder haar niet <rhyme label="b" type="f">dueren</rhyme>!</l>
        <l id="s10:l3" met="3" type="+-">Die my te <rhyme label="b" type="f" corresp="#s10:l2">vervueren</rhyme></l>
        <l id="s10:l4" met="3" type="+-">Zoecken van mijn <rhyme label="a" type="m" corresp="#s10:l1">God</rhyme>;</l>
        <l id="s10:l5" met="3" type="+-">Als ick by haar <rhyme label="c" type="f">mercke</rhyme></l>
        <l id="s10:l6" met="3" type="+-">Dat gezondigt <rhyme label="d" type="m">werd</rhyme>,</l>
        <l id="s10:l7" met="3" type="+-">Ziend’ haar booze <rhyme label="c" type="f" corresp="#s10:l5">wercken</rhyme>,</l>
        <l id="s10:l8" met="3" type="+-">Wat is dat een <rhyme label="d" type="m" corresp="#s10:l6">smer</rhyme>?</l>
        <l id="s10:l9" met="3" type="-+">Een dootsteeck door mijn <rhyme label="d" type="m" corresp="#s10:l6">hert</rhyme>!</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Mijn ziel koom’ niet in haren <rhyme label="a" type="m">raat</rhyme>!</l>
        <l id="s11:l2" met="3" type="-+">‘k Zal met haar niet <rhyme label="b" type="f">verkeeren</rhyme></l>
        <l id="s11:l3" met="3" type="+-">Die mijn God <rhyme label="b" type="f" corresp="#s11:l2">onteeren</rhyme>,</l>
        <l id="s11:l4" met="3" type="+-">Met het zondig <rhyme label="a" type="m" corresp="#s11:l1">quaat</rhyme>;</l>
        <l id="s11:l5" met="3" type="+-">‘k Heb een groot <rhyme label="c" type="f">mishagen</rhyme></l>
        <l id="s11:l6" met="3" type="+-">Als zy by mijn <rhyme label="d" type="m">zijn</rhyme>,</l>
        <l id="s11:l7" met="3" type="+-">‘k Kanse niet <rhyme label="c" type="f" corresp="#s11:l5">verdragen</rhyme>,</l>
        <l id="s11:l8" met="3" type="+-">‘t Is my zulcken <rhyme label="d" type="m" corresp="#s11:l6">pijn</rhyme>!</l>
        <l id="s11:l9" met="3" type="-+">Als ‘k onder haar <rhyme label="d" type="m" corresp="#s11:l6">verschijn</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Een uer dat valt my eeuwen <rhyme label="a" type="m">lang</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Als ick het niet <rhyme label="b" type="f">behoeve</rhyme>,</l>
        <l id="s12:l3" met="3" type="+-">Kan daar niet <rhyme label="b" type="f" corresp="#s12:l2">vertoeve</rhyme>,</l>
        <l id="s12:l4" met="3" type="+-">‘t Is my daar te <rhyme label="a" type="m" corresp="#s12:l1">bang</rhyme>;</l>
        <l id="s12:l5" met="3" type="+-">Koom’ terstond te <rhyme label="c" type="f">scheyden</rhyme>,</l>
        <l id="s12:l6" met="3" type="+-">‘k Ben niet in mijn <rhyme label="d" type="m">schick</rhyme>,</l>
        <l id="s12:l7" met="3" type="+-">Kan daar niet lang <rhyme label="c" type="f" corresp="#s12:l5">beyden</rhyme>,</l>
        <l id="s12:l8" met="3" type="+-">Maar ick van haar <rhyme label="d" type="m" corresp="#s12:l6">wijck</rhyme>,</l>
        <l id="s12:l9" met="3" type="-+">‘k Moet zijn by mijns <rhyme label="d" type="m" corresp="#s12:l6">gelijck</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Men hoort daar niet dan boos <rhyme label="a" type="m">gerel</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Heer laat my doch na <rhyme label="b" type="f">desen</rhyme></l>
        <l id="s13:l3" met="3" type="+-">Onder haar niet <rhyme label="b" type="f" corresp="#s13:l2">wesen</rhyme></l>
        <l id="s13:l4" met="3" type="+-">‘k Haatse als de <rhyme label="a" type="m" corresp="#s13:l1">hel</rhyme>;</l>
        <l id="s13:l5" met="3" type="+-">Ja zoud’ ick niet <rhyme label="c" type="f">haten</rhyme></l>
        <l id="s13:l6" met="3" type="+-">Die u haten <rhyme label="d" type="m">Heer</rhyme>?</l>
        <l id="s13:l7" met="3" type="+-">‘k Haatse <rhyme label="c" type="f" corresp="#s13:l5">uytermaten</rhyme>,</l>
        <l id="s13:l8" met="3" type="+-">Weertse, weertse <rhyme label="d" type="m" corresp="#s13:l6">veer</rhyme>!</l>
        <l id="s13:l9" met="3" type="-+">Haar by zijn doet my <rhyme label="d" type="m" corresp="#s13:l6">seer</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Mijn lust haar dwaze vreugde <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Haar dobbelen, speelen, <rhyme label="b" type="f">drincken</rhyme>,</l>
        <l id="s14:l3" met="3" type="+-">Lachen, danssen, <rhyme label="b" type="f" corresp="#s14:l2">klincken</rhyme>,</l>
        <l id="s14:l4" met="3" type="+-">Is my een <rhyme label="a" type="m" corresp="#s14:l1">verdriet</rhyme>,</l>
        <l id="s14:l5" met="3" type="+-">‘k Vind daar geen vermaack <rhyme label="c" type="f">in</rhyme>,</l>
        <l id="s14:l6" met="3" type="+-">‘k Acht het maar voor <rhyme label="d" type="m">draf</rhyme>,</l>
        <l id="s14:l7" met="3" type="+-">‘k Heb daar gansch geen smaack <rhyme label="c" type="f" corresp="#s14:l5">in</rhyme>,</l>
        <l id="s14:l8" met="3" type="+-">‘t Is my veel te <rhyme label="d" type="m" corresp="#s14:l6">laf</rhyme>,</l>
        <l id="s14:l9" met="3" type="-+">My steeckt de walg daar <rhyme label="d" type="m" corresp="#s14:l6">af</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Die vreugt heeft wel een zoeten <rhyme label="a" type="m">schijn</rhyme>,</l>
        <l id="s15:l2" met="3" type="-+">Indien ickse niet <rhyme label="b" type="f">kende</rhyme>,</l>
        <l id="s15:l3" met="3" type="+-">Maar ick weet in ‘t <rhyme label="b" type="f" corresp="#s15:l2">ende</rhyme></l>
        <l id="s15:l4" met="3" type="+-">Zalze bitter <rhyme label="a" type="m" corresp="#s15:l1">zijn</rhyme>;</l>
        <l id="s15:l5" met="3" type="+-">Weg ick ben zoo bot <rhyme label="c" type="f">niet</rhyme>?</l>
        <l id="s15:l6" met="3" type="+-">Ken haar <rhyme label="d" type="m">veynserije</rhyme>,</l>
        <l id="s15:l7" met="3" type="+-">Neen ick ben soo zot <rhyme label="c" type="f" corresp="#s15:l5">niet</rhyme>,</l>
        <l id="s15:l8" met="3" type="+-">Dat ick daarom <rhyme label="d" type="m" corresp="#s15:l6">my</rhyme></l>
        <l id="s15:l9" met="3" type="-+">Breng in een eeuwig <rhyme label="d" type="m" corresp="#s15:l6">ly</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

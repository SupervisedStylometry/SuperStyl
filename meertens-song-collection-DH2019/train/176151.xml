  <author>Jacobus Revius</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">O Mijn siele, wilt God <rhyme label="a" type="f">prijsen</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Want ick hoop mijn dagen <rhyme label="b" type="m">lanck</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Hem syn eere te <rhyme label="a" type="f" corresp="#s1:l1">bewijsen</rhyme>:</l>
        <l id="s1:l4" met="4" type="+-">En met liefelijck <rhyme label="b" type="m" corresp="#s1:l2">gesanck</rhyme></l>
        <l id="s1:l5" met="4" type="+-">Hem te loven wijt en <rhyme label="c" type="m">sijt</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Alle mijnes levens <rhyme label="c" type="m" corresp="#s1:l5">tijt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Wilt niet stellen u <rhyme label="a" type="f">betrouwen</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Op de Princen <rhyme label="b" type="m">hooch-geacht</rhyme>.</l>
        <l id="s2:l3" met="4" type="+-">Op den mensche wilt niet <rhyme label="a" type="f" corresp="#s2:l1">bouwen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Want by hem is heyl noch <rhyme label="b" type="m" corresp="#s2:l2">macht</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Als syn ziele neemt de <rhyme label="c" type="m">wijck</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Wert hy weder aerd' en <rhyme label="c" type="m" corresp="#s2:l5">slijck</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Syn beleyt is dan <rhyme label="a" type="f">gevloden</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Raet en aenslach gaen te <rhyme label="b" type="m">niet</rhyme>.</l>
        <l id="s3:l3" met="4" type="+-">Salich is hy, dien in <rhyme label="a" type="f" corresp="#s3:l1">noden</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Iacobs God syn hulpe <rhyme label="b" type="m" corresp="#s3:l2">biedt</rhyme>:</l>
        <l id="s3:l5" met="4" type="+-">Die syn vaste <rhyme label="c" type="m">toeversicht</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Heeft op God alleen <rhyme label="c" type="m" corresp="#s3:l5">gericht</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Op hem, die den hemel <rhyme label="a" type="f">hooge</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Door syn cracht gebouwet <rhyme label="b" type="m">heeft</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Die de zee, en die het <rhyme label="a" type="f" corresp="#s4:l1">drooge</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Met al wat daer inne <rhyme label="b" type="m" corresp="#s4:l2">leeft</rhyme></l>
        <l id="s4:l5" met="4" type="+-">Heeft gemaeckt: en die syn <rhyme label="c" type="m">woort</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Sal voltrecken voort en <rhyme label="c" type="m" corresp="#s4:l5">voort</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Hy doet recht aen al die <rhyme label="a" type="f">lijden</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Overlasting' en <rhyme label="b" type="m">gewelt</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Hy geeft broot in diere <rhyme label="a" type="f" corresp="#s5:l1">tijden</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Die den scherpen honger <rhyme label="b" type="m" corresp="#s5:l2">quelt</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Hy maeckt los en vry van <rhyme label="c" type="m">pijn</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Haer die vast gebonden <rhyme label="c" type="m" corresp="#s5:l5">zijn</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Het gesichte geeft hy <rhyme label="a" type="f">weder</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Die in blintheyt dolen <rhyme label="b" type="m">gaen</rhyme>.</l>
        <l id="s6:l3" met="4" type="+-">Die gebogen zijn ter <rhyme label="a" type="f" corresp="#s6:l1">neder</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Doet hy over-eynde <rhyme label="b" type="m" corresp="#s6:l2">staen</rhyme>.</l>
        <l id="s6:l5" met="4" type="+-">Wie oprechtelijck hem <rhyme label="c" type="m">draecht</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Den oprechten God <rhyme label="c" type="m" corresp="#s6:l5">behaecht</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Hy beschutt de vremde <rhyme label="a" type="f">lieden</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Als haer aldertrouste <rhyme label="b" type="m">vrint</rhyme>.</l>
        <l id="s7:l3" met="4" type="+-">Hy en laet geen quaet <rhyme label="a" type="f" corresp="#s7:l1">geschieden</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Aen het vader-lose <rhyme label="b" type="m" corresp="#s7:l2">kint</rhyme>.</l>
        <l id="s7:l5" met="4" type="+-">Weduwen hy wel <rhyme label="c" type="m">bewaert</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Dat geen leet haer <rhyme label="c" type="m" corresp="#s7:l5">wedervaert</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Maer de Heer wil omme <rhyme label="a" type="f">keeren</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Der godloosen slimmen <rhyme label="b" type="m">pat</rhyme>.</l>
        <l id="s8:l3" met="4" type="+-">Eeuwich sal de Heer <rhyme label="a" type="f" corresp="#s8:l1">regeren</rhyme>.</l>
        <l id="s8:l4" met="4" type="+-">Sion, ghy moet weten, <rhyme label="b" type="m" corresp="#s8:l2">dat</rhyme></l>
        <l id="s8:l5" met="4" type="+-">Uwe God behout syn <rhyme label="c" type="m">macht</rhyme></l>
        <l id="s8:l6" met="4" type="+-">Van geslachte tot <rhyme label="c" type="m" corresp="#s8:l5">geslacht</rhyme>.</l>
      </lg>
    </lg>
  </text>

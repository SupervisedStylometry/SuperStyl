    <melody>O zalig heilig Bethlehem</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Jacob Steendam</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">OGod, en aller Heeren <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Nu laat gy uwen Knecht in <rhyme label="b" type="f">vreden</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Na uwen woorde: en <rhyme label="a" type="m" corresp="#s1:l1">begeer</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Den weg van alle vlees <rhyme label="b" type="f" corresp="#s1:l2">betreden</rhyme>:</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Dewijl ik heden heb <rhyme label="a" type="m">gesien</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Het Heyl: met <rhyme label="b" type="f">uyterlijke-ogen</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">De Salicheyt, na u <rhyme label="a" type="m" corresp="#s2:l1">gebiên</rhyme>:</l>
        <l id="s2:l4" met="4" type="-+">Den Vrede-Vorst groot van <rhyme label="b" type="f" corresp="#s2:l2">vermogen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Die gy (ô Heer) hebt <rhyme label="a" type="m">toe-bereyd</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Voor 't an-gesigt van alle <rhyme label="b" type="f">volken</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Een Licht, dat uyt de nacht ons <rhyme label="a" type="m" corresp="#s3:l1">leyd</rhyme>:</l>
        <l id="s3:l4" met="4" type="-+">En uyt de schau van <rhyme label="b" type="f" corresp="#s3:l2">duyst're-wolken</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Een Licht dat tot verlichting <rhyme label="a" type="m">strekt</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Der Heÿdenen: in allen <rhyme label="b" type="f">Landen</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">En Isr'els heerlijkheyd <rhyme label="a" type="m" corresp="#s4:l1">ondekt</rhyme>.</l>
        <l id="s4:l4" met="4" type="-+">Voor-seyd door <rhyme label="b" type="f" corresp="#s4:l2">hemelsche-verstanden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Een Licht dat 's menschen blindheyd <rhyme label="a" type="m">scheyd</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Uyt alle sinnen, en <rhyme label="b" type="f">gedachten</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">De Sonne der <rhyme label="a" type="m" corresp="#s5:l1">Gerechtigheyd</rhyme>:</l>
        <l id="s5:l4" met="4" type="-+">Verlichter van de <rhyme label="b" type="f" corresp="#s5:l2">droefste-nachten</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

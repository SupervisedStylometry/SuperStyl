  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="5" type="+-">UWe toorn, Heere, Doch van ons <rhyme label="a" type="f">afweere</rhyme>,</l>
        <l id="s1:l2" met="5" type="+-">Dat niet en woede Uwe <rhyme label="b" type="f">bloed'geroede</rhyme>;</l>
        <l id="s1:l3" met="5" type="-+">Oordeelt ons arme niet nae ons <rhyme label="c" type="f">misdaeden</rhyme>,</l>
        <l id="s1:l4" met="2" type="+-">Maer nae <rhyme label="c" type="f" corresp="#s1:l3">genaede</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="5" type="+-">So Gy ons richten Woud na onse <rhyme label="a" type="f">plichten</rhyme>,</l>
        <l id="s2:l2" met="5" type="+-">In onse sonden Waeren wy <rhyme label="b" type="f">verslonden</rhyme>,</l>
        <l id="s2:l3" met="5" type="-+">Niemant op aerden sou Uw swaere <rhyme label="c" type="f">plaeghen</rhyme></l>
        <l id="s2:l4" met="2" type="+-">Konnen <rhyme label="c" type="f" corresp="#s2:l3">verdraghen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="5" type="+-">Heer, wilt vergeven Onse sondigh <rhyme label="a" type="f">leven</rhyme>,</l>
        <l id="s3:l2" met="5" type="+-">Wilt ons verschoonen En genaê <rhyme label="b" type="f">betoonen</rhyme>,</l>
        <l id="s3:l3" met="5" type="-+">Gy die ons spaeren pla ght en U <rhyme label="c" type="f">erbarmen</rhyme></l>
        <l id="s3:l4" met="2" type="+-">Over ons <rhyme label="c" type="f" corresp="#s3:l3">arme</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="5" type="+-">Denkt aen het stryden En het bitter <rhyme label="a" type="f">lyden</rhyme>,</l>
        <l id="s4:l2" met="5" type="+-">Naeg'len en kroone Van Uw lieve <rhyme label="b" type="f">Soone</rhyme>,</l>
        <l id="s4:l3" met="5" type="-+">Die door Sijn dood en wonden ons het <rhyme label="c" type="f">leven</rhyme></l>
        <l id="s4:l4" met="2" type="+-">Heeft weêr <rhyme label="c" type="f" corresp="#s4:l3">gegeven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="5" type="+-">Daerom, ô Heere, Ons geloof <rhyme label="a" type="f">vermeere</rhyme>,</l>
        <l id="s5:l2" met="5" type="+-">Uw woord ons weide, En Uw Geest <rhyme label="b" type="f">geleide</rhyme>,</l>
        <l id="s5:l3" met="5" type="-+">Dat wy in Christo mogen saligh <rhyme label="c" type="f">sterven</rhyme>,</l>
        <l id="s5:l4" met="2" type="+-">D' Hemel <rhyme label="c" type="f" corresp="#s5:l3">beërven</rhyme>.</l>
      </lg>
    </lg>
  </text>

<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>22705</id>
    <date>
      <year-start>1576</year-start>
      <year-end>1582</year-end>
    </date>
    <tags>
      <tag standard-name="vermaanlied" translation="admonitory song">vermaanlied</tag>
    </tags>
    <melody>Het was een klerkje dat ging ter school</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>David Joris</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Hoort alle die ooren hebt om <rhyme label="a" type="f">hooren</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Und' oogen te sien mit groot <rhyme label="b" type="m">verstandt</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Wert nieuw her-boren, of ghy blijft <rhyme label="a" type="f" corresp="#s1:l1">verloren</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Sult nimmermeer komen int waerde <rhyme label="b" type="m" corresp="#s1:l2">Landt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ten sy dat ghy werdt nieuw van <rhyme label="a" type="f">Gheeste</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Mit Christo deur vuyr unde water te <rhyme label="b" type="m">treen</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Belijd u vry de minst mit die <rhyme label="a" type="f" corresp="#s2:l1">meeste</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Of ghy werdt voor Godt gheen Christen <rhyme label="b" type="m" corresp="#s2:l2">beleen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Hoe langhe wilt ghy't onnutte <rhyme label="a" type="f">beminnen</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Te vreden sijn mit <rhyme label="b" type="m">ydelheyt</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Soeckt wijsheydt als goldt, ghy sult-se <rhyme label="a" type="f" corresp="#s3:l1">vinnen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Daer die hope van't Leven verborghen <rhyme label="b" type="m" corresp="#s3:l2">leyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Waerom wilt ghy niet salich <rhyme label="a" type="f">wesen</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Doen Godes wille unde sijn <rhyme label="b" type="m">Ghebodt</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Hoe moechdy dus sot unde weerpalich <rhyme label="a" type="f" corresp="#s4:l1">wesen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Unde hebben die Werlt veel liever dan <rhyme label="b" type="m" corresp="#s4:l2">Godt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Scheydt u van alle die u doen <rhyme label="a" type="f">dwalen</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">scheydt u, seg ick, t'is meer dan <rhyme label="b" type="m">tijt</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Der Heere compt om wraeck te <rhyme label="a" type="f" corresp="#s5:l1">betalen</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Die Werlt mit haren aenhangh <rhyme label="b" type="m" corresp="#s5:l2">subijt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Waer wildy u aensicht dan <rhyme label="a" type="f">verberghen</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Als ghy voor den strenghen Richter sult <rhyme label="b" type="m">staen</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">In Steen-spleten kruypen voor den <rhyme label="a" type="f" corresp="#s6:l1">merghen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Want loon suldy na u wercken <rhyme label="b" type="m" corresp="#s6:l2">ontfaen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Hierom doet boet unde ware <rhyme label="a" type="f">penitency</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Mit die drye duysent weest int <rhyme label="b" type="m">ghetal</rhyme>:</l>
        <l id="s7:l3" met="4" type="-+">Die Petrus vermaninghe gaven <rhyme label="a" type="f" corresp="#s7:l1">credency</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Unde warden ghewasschen van sonden <rhyme label="b" type="m" corresp="#s7:l2">al</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Dit ist beginsel eens Christen <rhyme label="a" type="f">leven</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Die Wech, die Waerheyt, d'Apostolische <rhyme label="b" type="m">leer</rhyme>:</l>
        <l id="s8:l3" met="4" type="-+">Daer moeten wy in, als daer staet <rhyme label="a" type="f" corresp="#s8:l1">gheschreven</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Of komen int Rijcke Godes <rhyme label="b" type="m" corresp="#s8:l2">nimmermeer</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Wee alle die op haer selfs wijsheydt <rhyme label="a" type="f">bouwen</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Den dwalenden Gheest volghen <rhyme label="b" type="m">naer</rhyme>:</l>
        <l id="s9:l3" met="4" type="-+">Of op een verkeert fundament <rhyme label="a" type="f" corresp="#s9:l1">betrouwen</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Die de Waerheydt int Licht brenght <rhyme label="b" type="m" corresp="#s9:l2">openbaer</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Prins, Godes Trompetten claer van <rhyme label="a" type="f">gheschallen</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Die alle de Werlt deur werden <rhyme label="b" type="m">ghehoort</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Sullen Babel, Antichrists Rijck doen <rhyme label="a" type="f" corresp="#s10:l1">vallen</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Als een beest dat schielijcken steeckt die <rhyme label="b" type="m" corresp="#s10:l2">moort</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

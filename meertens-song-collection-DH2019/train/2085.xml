      <category translation="religion">godsdienst</category>
    </categories>
  <author>Daniel Bellemans</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">JESU uwe <rhyme label="a" type="f">soetheydt</rhyme></l>
        <l id="s1:l2" met="3" type="+-">Is tot ons soo <rhyme label="b" type="m">groot</rhyme>,</l>
        <l id="s1:l3" met="3" type="+-">Dat ghy uyt puer <rhyme label="a" type="f" corresp="#s1:l1">goetheydt</rhyme></l>
        <l id="s1:l4" met="3" type="+-">Stirft voor ons de <rhyme label="b" type="m" corresp="#s1:l2">doodt</rhyme>,</l>
        <l id="s1:l5" met="3" type="+-">Daer g'ons kost <rhyme label="c" type="f">behoeden</rhyme></l>
        <l id="s1:l6" met="3" type="+-">Met eenen drupt te <rhyme label="c" type="f" corresp="#s1:l5">bloeden</rhyme>,</l>
        <l id="s1:l7" met="3" type="+-">Stort ghy eenen <rhyme label="d" type="m">vloedt</rhyme></l>
        <l id="s1:l8" met="1" type="-+">van <rhyme label="d" type="m" corresp="#s1:l7">Bloedt</rhyme>.</l>
        <l id="s1:l9" met="3" type="+-">Siet syn Bloedt eens <rhyme label="c" type="f" corresp="#s1:l5">vloeden</rhyme>,</l>
        <l id="s1:l10" met="3" type="+-">Siet wat Jesus <rhyme label="d" type="m" corresp="#s1:l7">doet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Jesus wordt <rhyme label="a" type="f">besneden</rhyme></l>
        <l id="s2:l2" met="3" type="+-">Hy voldoet ons <rhyme label="b" type="m">boet</rhyme>,</l>
        <l id="s2:l3" met="3" type="+-">Hy begint te <rhyme label="a" type="f" corresp="#s2:l1">treden</rhyme></l>
        <l id="s2:l4" met="3" type="+-">De Wyn-pers van <rhyme label="b" type="m" corresp="#s2:l2">Bloedt</rhyme>,</l>
        <l id="s2:l5" met="3" type="+-">'t Hofken is <rhyme label="c" type="f">besproten</rhyme>,</l>
        <l id="s2:l6" met="3" type="+-">d'Aerd'heeft syn Bloedt <rhyme label="c" type="f" corresp="#s2:l5">ghenoten</rhyme></l>
        <l id="s2:l7" met="3" type="+-">Als hy heeft door <rhyme label="d" type="m">groot</rhyme></l>
        <l id="s2:l8" met="1" type="-+">en <rhyme label="d" type="m" corresp="#s2:l7">noot</rhyme>,</l>
        <l id="s2:l9" met="3" type="+-">Bloedigh sweet <rhyme label="c" type="f" corresp="#s2:l5">vergoten</rhyme></l>
        <l id="s2:l10" met="3" type="+-">Uyt vrees van de <rhyme label="d" type="m" corresp="#s2:l7">doodt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Siet de Wolven <rhyme label="a" type="f">woeden</rhyme></l>
        <l id="s3:l2" met="3" type="+-">Op 't onnoosel <rhyme label="b" type="m">Lam</rhyme>,</l>
        <l id="s3:l3" met="3" type="+-">Sy slaen hem met <rhyme label="a" type="f" corresp="#s3:l1">Roeden</rhyme></l>
        <l id="s3:l4" met="3" type="+-">Die ons sond' <rhyme label="b" type="m" corresp="#s3:l2">af-nam</rhyme>,</l>
        <l id="s3:l5" met="3" type="+-">Godt sit in de <rhyme label="c" type="f">banden</rhyme></l>
        <l id="s3:l6" met="3" type="+-">Den Koningh staet te <rhyme label="c" type="f" corresp="#s3:l5">schande</rhyme>,</l>
        <l id="s3:l7" met="3" type="+-">Hy sit op den <rhyme label="d" type="m">Throon</rhyme></l>
        <l id="s3:l8" met="1" type="-+">ten <rhyme label="d" type="m" corresp="#s3:l7">thoon</rhyme>,</l>
        <l id="s3:l9" met="3" type="+-">Met een Riet in <rhyme label="c" type="f" corresp="#s3:l5">d'Handen</rhyme>,</l>
        <l id="s3:l10" met="3" type="+-">En een <rhyme label="d" type="m" corresp="#s3:l7">Doorne-kroon</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">Siet den Heer van <rhyme label="a" type="f">allen</rhyme></l>
        <l id="s4:l2" met="3" type="+-">Die d'heel wereldt <rhyme label="b" type="m">draeght</rhyme>,</l>
        <l id="s4:l3" met="3" type="+-">Komt met 't Kruys te <rhyme label="a" type="f" corresp="#s4:l1">vallen</rhyme></l>
        <l id="s4:l4" met="3" type="+-">Hoe wordt Godt <rhyme label="b" type="m" corresp="#s4:l2">gheplaeght</rhyme>,</l>
        <l id="s4:l5" met="3" type="+-">Hy lydt duysendt <rhyme label="c" type="f">pranghen</rhyme>,</l>
        <l id="s4:l6" met="3" type="+-">Hy wordt aen 't Kruys <rhyme label="c" type="f" corresp="#s4:l5">gehangen</rhyme>,</l>
        <l id="s4:l7" met="3" type="+-">d'Ermen zyn <rhyme label="d" type="m">ghereckt</rhyme>,</l>
        <l id="s4:l8" met="1" type="-+"><rhyme label="d" type="m" corresp="#s4:l7">ghestreckt</rhyme>,</l>
        <l id="s4:l9" met="3" type="+-">Om ons te <rhyme label="c" type="f" corresp="#s4:l5">ontfanghen</rhyme></l>
        <l id="s4:l10" met="3" type="+-">'t Hert van liefde <rhyme label="d" type="m" corresp="#s4:l7">breckt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="+-">Tot de <rhyme label="a" type="f">alder-lesten</rhyme></l>
        <l id="s5:l2" met="3" type="+-">Druppel van syn <rhyme label="b" type="m">Bloedt</rhyme>,</l>
        <l id="s5:l3" met="3" type="+-">Gheeft den Heer ten <rhyme label="a" type="f" corresp="#s5:l1">besten</rhyme></l>
        <l id="s5:l4" met="3" type="+-">Siet wat Jesus <rhyme label="b" type="m" corresp="#s5:l2">doet</rhyme>,</l>
        <l id="s5:l5" met="3" type="+-">Siet eens <rhyme label="c" type="f">d'Offerhande</rhyme></l>
        <l id="s5:l6" met="3" type="+-">Van Jesus liefde <rhyme label="c" type="f" corresp="#s5:l5">branden</rhyme></l>
        <l id="s5:l7" met="3" type="+-">'t Schynt dat Godt <rhyme label="d" type="m">verdoet</rhyme></l>
        <l id="s5:l8" met="1" type="-+">syn <rhyme label="d" type="m" corresp="#s5:l7">Bloedt</rhyme>,</l>
        <l id="s5:l9" met="3" type="+-">Hy mindt syn' <rhyme label="c" type="f" corresp="#s5:l5">vyanden</rhyme>,</l>
        <l id="s5:l10" met="3" type="+-">Hy voldoet hun <rhyme label="d" type="m" corresp="#s5:l7">boet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="+-">Ons schuldt is <rhyme label="a" type="f">vergheven</rhyme></l>
        <l id="s6:l2" met="3" type="+-">Door uw' onschuldt, <rhyme label="b" type="m">Heer</rhyme></l>
        <l id="s6:l3" met="3" type="+-">Uw' doodt is ons <rhyme label="a" type="f" corresp="#s6:l1">leven</rhyme>,</l>
        <l id="s6:l4" met="3" type="+-">Uw' schand' is ons <rhyme label="b" type="m" corresp="#s6:l2">eer</rhyme>,</l>
        <l id="s6:l5" met="3" type="+-">Uw' ghebonde <rhyme label="c" type="f">handen</rhyme></l>
        <l id="s6:l6" met="3" type="+-">Ontbinden onse <rhyme label="c" type="f" corresp="#s6:l5">banden</rhyme>,</l>
        <l id="s6:l7" met="3" type="+-">Uw' Gal en <rhyme label="d" type="m">Azyn</rhyme></l>
        <l id="s6:l8" met="1" type="-+">is <rhyme label="d" type="m" corresp="#s6:l7">wyn</rhyme>,</l>
        <l id="s6:l9" met="3" type="+-">En uw <rhyme label="c" type="f" corresp="#s6:l5">offerande</rhyme></l>
        <l id="s6:l10" met="3" type="+-">Doet ons saligh <rhyme label="d" type="m" corresp="#s6:l7">zyn</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="+-">Door uw bitter <rhyme label="a" type="f">lyden</rhyme></l>
        <l id="s7:l2" met="3" type="+-">Alder-soetsten <rhyme label="b" type="m">Heer</rhyme></l>
        <l id="s7:l3" met="3" type="+-">Brenght ons in 't <rhyme label="a" type="f" corresp="#s7:l1">verblyden</rhyme>,</l>
        <l id="s7:l4" met="3" type="+-">Mensch wat wildy <rhyme label="b" type="m" corresp="#s7:l2">meer</rhyme>?</l>
        <l id="s7:l5" met="3" type="+-">Laet ons Godt dan <rhyme label="c" type="f">minnen</rhyme></l>
        <l id="s7:l6" met="3" type="+-">Uyt heel ons hert en <rhyme label="c" type="f" corresp="#s7:l5">sinnen</rhyme>,</l>
        <l id="s7:l7" met="3" type="+-">Want hy is soo <rhyme label="d" type="m">soet</rhyme></l>
        <l id="s7:l8" met="1" type="-+">en <rhyme label="d" type="m" corresp="#s7:l7">goet</rhyme>,</l>
        <l id="s7:l9" met="3" type="+-">Om den prys te <rhyme label="c" type="f" corresp="#s7:l5">winnen</rhyme></l>
        <l id="s7:l10" met="3" type="+-">Van syn dierbaer <rhyme label="d" type="m" corresp="#s7:l7">Bloedt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

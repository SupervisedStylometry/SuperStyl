  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Menschen wilt u <rhyme label="a" type="f">bekeeren</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Den Armen bystandt <rhyme label="b" type="m">doet</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">En dat van t'Aerdsche <rhyme label="b" type="m" corresp="#s1:l2">goet</rhyme>:</l>
        <l id="s1:l4" met="3" type="-+">Soo sal den Heer der <rhyme label="a" type="f" corresp="#s1:l1">Heeren</rhyme></l>
        <l id="s1:l5" met="3" type="-+">In uwen <rhyme label="b" type="m" corresp="#s1:l2">tegenspoet</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">V comen int <rhyme label="b" type="m" corresp="#s1:l2">ghemoet</rhyme>:</l>
        <l id="s1:l7" met="4" type="-+">En verlossen van t'boos <rhyme label="b" type="m" corresp="#s1:l2">ghebroet</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">Dat hier altijdt vyandich <rhyme label="b" type="m" corresp="#s1:l2">woet</rhyme>.</l>
        <l id="s1:l9" met="3" type="-+">Dan sal Gods seghen <rhyme label="c" type="f">stercken</rhyme>,</l>
        <l id="s1:l10" met="4" type="+-">Al u wercken: niet <rhyme label="d" type="m">vertraeght</rhyme></l>
        <l id="s1:l11" met="3" type="-+">Den loon, die elck <rhyme label="d" type="m" corresp="#s1:l10">behaeght</rhyme></l>
        <l id="s1:l12" met="3" type="-+">Ontfangt vry <rhyme label="d" type="m" corresp="#s1:l10">onversaeght</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Weldien, die zal <rhyme label="a" type="f">ontfermen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Den Armen, breedt end' <rhyme label="b" type="m">wijt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Hy werdt van Godt <rhyme label="b" type="m" corresp="#s2:l2">bevrijt</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Den Heer sal hem <rhyme label="a" type="f" corresp="#s2:l1">beschermen</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Verlossen uyt den <rhyme label="b" type="m" corresp="#s2:l2">strijt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Als comt den quaden <rhyme label="b" type="m" corresp="#s2:l2">tijt</rhyme>:</l>
        <l id="s2:l7" met="4" type="-+">En zijn zaet werdt <rhyme label="b" type="m" corresp="#s2:l2">gebenedijt</rhyme>:</l>
        <l id="s2:l8" met="4" type="-+">De heer scheldt hem zijn zonden <rhyme label="b" type="m" corresp="#s2:l2">quijt</rhyme>.</l>
        <l id="s2:l9" met="3" type="-+">Hy sal u niet <rhyme label="c" type="f">vergeten</rhyme>,</l>
        <l id="s2:l10" met="4" type="+-">Maer uyt meten, wel <rhyme label="d" type="m">gesint</rhyme>:</l>
        <l id="s2:l11" met="3" type="-+">Als een Moeder haer <rhyme label="d" type="m" corresp="#s2:l10">kint</rhyme>,</l>
        <l id="s2:l12" met="3" type="-+">Werdt ghy van hem <rhyme label="d" type="m" corresp="#s2:l10">bemint</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Wilt doch den Armen <rhyme label="a" type="f">laven</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Van desen Aerdtschen <rhyme label="b" type="m">schat</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Als hy is moed' en <rhyme label="b" type="m" corresp="#s3:l2">mat</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Den Heer sal u <rhyme label="a" type="f" corresp="#s3:l1">begaven</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Ghy crijgt heel vol u <rhyme label="b" type="m" corresp="#s3:l2">vat</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Op t'veldt, en in de <rhyme label="b" type="m" corresp="#s3:l2">Stadt</rhyme>:</l>
        <l id="s3:l7" met="4" type="-+">Daerom laet u bewegen <rhyme label="b" type="m" corresp="#s3:l2">wat</rhyme>:</l>
        <l id="s3:l8" met="4" type="-+">Helpt hem die int verneren <rhyme label="b" type="m" corresp="#s3:l2">sat</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Soo sal u licht van <rhyme label="c" type="f">verre</rhyme>,</l>
        <l id="s3:l10" met="4" type="+-">Als een sterre// claer op <rhyme label="d" type="m">gaen</rhyme>,</l>
        <l id="s3:l11" met="3" type="-+">En eeuwig blyven <rhyme label="d" type="m" corresp="#s3:l10">staen</rhyme>,</l>
        <l id="s3:l12" met="3" type="-+">Want ghy doet Gods <rhyme label="d" type="m" corresp="#s3:l10">vermaen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Godt sal door zijn <rhyme label="a" type="f">genade</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Loonen u wercken <rhyme label="b" type="m">jent</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Want sy zijn hem <rhyme label="b" type="m" corresp="#s4:l2">bekent</rhyme>:</l>
        <l id="s4:l4" met="3" type="-+">Ghy sult oock vroech en <rhyme label="a" type="f" corresp="#s4:l1">spade</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Vercrijgen sonder <rhyme label="b" type="m" corresp="#s4:l2">ent</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Troost, tegen t'helsch <rhyme label="b" type="m" corresp="#s4:l2">Serpent</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Barmherticheyt blijft u <rhyme label="b" type="m" corresp="#s4:l2">ontrent</rhyme>:</l>
        <l id="s4:l8" met="4" type="-+">Hierom u tot den Armen <rhyme label="b" type="m" corresp="#s4:l2">went</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">Soo blijven vele <rhyme label="c" type="f">Zonden</rhyme>,</l>
        <l id="s4:l10" met="4" type="+-">t'Allen stonden// hier <rhyme label="d" type="m">bedeckt</rhyme>,</l>
        <l id="s4:l11" met="3" type="-+">Daerom den Geest <rhyme label="d" type="m" corresp="#s4:l10">verweckt</rhyme>,</l>
        <l id="s4:l12" met="3" type="-+">V hert niet en <rhyme label="d" type="m" corresp="#s4:l10">ontreckt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Oorlof edel <rhyme label="a" type="f">Princieren</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Hier doch goet-hertich <rhyme label="b" type="m">leeft</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Door t'Aerdtsche goet niet <rhyme label="b" type="m" corresp="#s5:l2">sneeft</rhyme>:</l>
        <l id="s5:l4" met="3" type="-+">Want Christus <rhyme label="a" type="f" corresp="#s5:l1">goedertieren</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Sulck haer misdaedt <rhyme label="b" type="m" corresp="#s5:l2">vergeeft</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Dies hem vastlick <rhyme label="b" type="m" corresp="#s5:l2">aencleeft</rhyme>:</l>
        <l id="s5:l7" met="4" type="-+">Wie't niet en doet, hier naemaels <rhyme label="b" type="m" corresp="#s5:l2">beeft</rhyme>,</l>
        <l id="s5:l8" met="4" type="-+">Maer wie het doet, voor't aerdtsche <rhyme label="b" type="m" corresp="#s5:l2">heeft</rhyme></l>
        <l id="s5:l9" met="3" type="-+">Eenen toeganck tot den <rhyme label="c" type="f">Vader</rhyme>,</l>
        <l id="s5:l10" met="4" type="+-">Als berader// Christus <rhyme label="d" type="m">reyn</rhyme></l>
        <l id="s5:l11" met="3" type="-+">Is zijn voorspraeck <rhyme label="d" type="m" corresp="#s5:l10">alleyn</rhyme>,</l>
        <l id="s5:l12" met="3" type="-+">Dus volght hem groot en <rhyme label="d" type="m" corresp="#s5:l10">cleyn</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

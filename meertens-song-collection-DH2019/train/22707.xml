<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>22707</id>
    <date>
      <year-start>1576</year-start>
      <year-end>1582</year-end>
    </date>
    <tags>
      <tag standard-name="vermaanlied" translation="admonitory song">vermaanlied</tag>
    </tags>
    <melody>Ik hoorde heden waaien</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>David Joris</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Ick hoorden huyden <rhyme label="a" type="f">wayen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Der Geest blies in mynen <rhyme label="b" type="m">sin</rhyme>:</l>
        <l id="s1:l3" met="3" type="-+">Und' Ick hieldt op in't <rhyme label="a" type="f" corresp="#s1:l1">sayen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Van't ghreyn al sonder <rhyme label="b" type="m" corresp="#s1:l2">ghewin</rhyme>:</l>
        <l id="s1:l5" met="3" type="-+">Ick liet dat geene <rhyme label="c" type="f">vruchten</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Noch salicheyt en <rhyme label="d" type="m">wracht</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Wt liefden moet ick <rhyme label="c" type="f" corresp="#s1:l5">suchten</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Die my oyt ghoet <rhyme label="d" type="m" corresp="#s1:l6">inbracht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">T'verstant greep Ick in <rhyme label="a" type="f">handen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Dat van Godt komen <rhyme label="b" type="m">moet</rhyme>:</l>
        <l id="s2:l3" met="3" type="-+">Die liefd', O ghy <rhyme label="a" type="f" corresp="#s2:l1">bekanden</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">De Mensch alleen vromen <rhyme label="b" type="m" corresp="#s2:l2">doet</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Holdt liefd' in u <rhyme label="c" type="f">ghepresen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Unde doet dan wat ghy <rhyme label="d" type="m">wilt</rhyme>:</l>
        <l id="s2:l7" met="3" type="-+">Doet gheen ander werck dan <rhyme label="c" type="f" corresp="#s2:l5">desen</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Unde sijt daer in <rhyme label="d" type="m" corresp="#s2:l6">ghestilt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Al wat ghy doet ter <rhyme label="a" type="f">Aerden</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Wacht die Zeborien <rhyme label="b" type="m">Godts</rhyme>:</l>
        <l id="s3:l3" met="3" type="-+">Holdt Godts Tempel in <rhyme label="a" type="f" corresp="#s3:l1">waerden</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Doetet al ter Glorien <rhyme label="b" type="m" corresp="#s3:l2">Godts</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">Soeckt dat profijt van <rhyme label="c" type="f">veelen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Een ander, u selven <rhyme label="d" type="m">niet</rhyme>:</l>
        <l id="s3:l7" met="3" type="-+">U Broeders schand' wilt <rhyme label="c" type="f" corresp="#s3:l5">heelen</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Soo ons die liefde <rhyme label="d" type="m" corresp="#s3:l6">ghebiet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Wacht den simpelen als den <rhyme label="a" type="f">siecken</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Hier inne doch niet en <rhyme label="b" type="m">sneeft</rhyme>:</l>
        <l id="s4:l3" met="3" type="-+">Den Juden als den <rhyme label="a" type="f" corresp="#s4:l1">Griecken</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Gheen argernisse en <rhyme label="b" type="m" corresp="#s4:l2">geeft</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">Noch Godes Volck <rhyme label="c" type="f">verkreghen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Soo die Schriftuer <rhyme label="d" type="m">bewijst</rhyme>.</l>
        <l id="s4:l7" met="3" type="-+">Daer gheen heyl in is <rhyme label="c" type="f" corresp="#s4:l5">gheleghen</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Want sulcks Gode <rhyme label="d" type="m" corresp="#s4:l6">prijst</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Prins in liefde staen die <rhyme label="a" type="f">Noten</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Die onghemeten <rhyme label="b" type="m">sijn</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Daer't al in is <rhyme label="a" type="f" corresp="#s5:l1">besloten</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Met unde Propheten <rhyme label="b" type="m" corresp="#s5:l2">fijn</rhyme>:</l>
        <l id="s5:l5" met="3" type="-+">T'werdt my al <rhyme label="c" type="f">toeghelaten</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Maer al en stichtet <rhyme label="d" type="m">niet</rhyme>:</l>
        <l id="s5:l7" met="3" type="-+">Leght liefd' unde leeft by <rhyme label="c" type="f" corresp="#s5:l5">maten</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Anders en dichtet <rhyme label="d" type="m" corresp="#s5:l6">niet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

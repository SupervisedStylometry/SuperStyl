  <author>Willem Sluiter</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">KOm, en laat ons t'saam den <rhyme label="a" type="f">Heere</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Vrolijk zingen, t'zijner <rhyme label="a" type="f" corresp="#s1:l1">eere</rhyme></l>
        <l id="s1:l3" met="4" type="+-">En gaan met veel lof, so <rhyme label="b" type="m">soet</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Hem, al juichende te <rhyme label="b" type="m" corresp="#s1:l3">moet</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">'t Sal den Heer bevallig <rhyme label="c" type="f">wesen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Meer dan of men hem voor <rhyme label="c" type="f" corresp="#s1:l5">desen</rhyme></l>
        <l id="s1:l7" met="4" type="+-">Offer-beesten hadd' <rhyme label="d" type="m">geslagt</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">En op sijn Altaar <rhyme label="d" type="m" corresp="#s1:l7">gebragt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Doch dat elk van ons hem <rhyme label="a" type="f">prijse</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Singend' op de rechte <rhyme label="a" type="f" corresp="#s2:l1">wijse</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Met verstant en in den <rhyme label="b" type="m">geest</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Met des herten aendacht <rhyme label="b" type="m" corresp="#s2:l3">meest</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Godt let op geen toon of <rhyme label="c" type="f">noten</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">'t Hert zy voor hem <rhyme label="c" type="f" corresp="#s2:l5">uitgegoten</rhyme>;</l>
        <l id="s2:l7" met="4" type="+-">Anders segt hy; doet van <rhyme label="d" type="m">hier</rhyme></l>
        <l id="s2:l8" met="4" type="+-">Uwer Liederen <rhyme label="d" type="m" corresp="#s2:l7">getier</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Met inwend'ge <rhyme label="a" type="f">Zielen-snikken</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Moet men op Godts Eere <rhyme label="a" type="f" corresp="#s3:l1">mikken</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Dat geen vleeschelijk <rhyme label="b" type="m">vermaak</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Ons in geestlijk singen <rhyme label="b" type="m" corresp="#s3:l3">raak</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Laet ons onse tochten <rhyme label="c" type="f">wringen</rhyme></l>
        <l id="s3:l6" met="4" type="+-">In de woorden die wy <rhyme label="c" type="f" corresp="#s3:l5">singen</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Dats' altijt malkaar <rhyme label="d" type="m">verstaan</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">En eendrachtig t'samen <rhyme label="d" type="m" corresp="#s3:l7">gaan</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Wil men 's Heeren lof <rhyme label="a" type="f">verkonden</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Midden in 't vermaak der <rhyme label="a" type="f" corresp="#s4:l1">sonden</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Daar men malt, en boert en <rhyme label="b" type="m">lagt</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">'t Is hem al te klein <rhyme label="b" type="m" corresp="#s4:l3">geagt</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">Groot' eerbiedig, stilheyt, <rhyme label="c" type="f">yver</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Zy in ons' gesang, en <rhyme label="c" type="f" corresp="#s4:l5">blyver</rhyme></l>
        <l id="s4:l7" met="4" type="+-">Als een onderwijs en <rhyme label="d" type="m">wet</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Daar sich elk met lust na <rhyme label="d" type="m" corresp="#s4:l7">set</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Denkt, dat selfs de <rhyme label="a" type="f">Zeraphijnen</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Met ontzag voor Godt <rhyme label="a" type="f" corresp="#s5:l1">verschijnen</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Als se voor sijn hoogen <rhyme label="b" type="m">throon</rhyme></l>
        <l id="s5:l4" met="4" type="+-">T'saam verheffen haren <rhyme label="b" type="m" corresp="#s5:l3">toon</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">'t Herte moet, meer dan de <rhyme label="c" type="f">snaren</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Wel gestelt zijn, sal men 't <rhyme label="c" type="f" corresp="#s5:l5">klaren</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Dat een lof-sang, lied, of <rhyme label="d" type="m">psalm</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">In Godts ooren klink en <rhyme label="d" type="m" corresp="#s5:l7">galm</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Wordt de heil'ge Godt <rhyme label="a" type="f">gepresen</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Laet ons ook dan heilig <rhyme label="a" type="f" corresp="#s6:l1">wesen</rhyme>.</l>
        <l id="s6:l3" met="4" type="+-">Hy wordt gram, als sijn <rhyme label="b" type="m">verbond</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Komt in 's Goddeloosen <rhyme label="b" type="m" corresp="#s6:l3">mond</rhyme>.</l>
        <l id="s6:l5" met="4" type="+-">Wie recht rein door 't bloed sijns <rhyme label="c" type="f">Heeren</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Hem dank-offert, sal hem <rhyme label="c" type="f" corresp="#s6:l5">eeren</rhyme>:</l>
        <l id="s6:l7" met="4" type="+-">Wie sijn weg wel aanstelt, <rhyme label="d" type="m">dien</rhyme></l>
        <l id="s6:l8" met="4" type="+-">Sal hy steeds sijn heil doen <rhyme label="d" type="m" corresp="#s6:l7">sien</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Die geen wulps bedrijf <rhyme label="a" type="f">vermeugen</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">En sich geern in Godt <rhyme label="a" type="f" corresp="#s7:l1">verheugen</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Zijn op 't aldermeest <rhyme label="b" type="m">bequaam</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Om te singen sijnen <rhyme label="b" type="m" corresp="#s7:l3">Naam</rhyme>.</l>
        <l id="s7:l5" met="4" type="+-">Komt, verheugt u sonder <rhyme label="c" type="f">schromen</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Gy rechtveerdigen en <rhyme label="c" type="f" corresp="#s7:l5">vromen</rhyme>,</l>
        <l id="s7:l7" met="4" type="+-">En singt vrolik en <rhyme label="d" type="m">verblydt</rhyme>,</l>
        <l id="s7:l8" met="4" type="+-">All' die recht van herten <rhyme label="d" type="m" corresp="#s7:l7">zyt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Godt ontsluite selfs uw <rhyme label="a" type="f">monden</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Om sijn lof recht te <rhyme label="a" type="f" corresp="#s8:l1">verkonden</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Ja hy trek uw hert en <rhyme label="b" type="m">stem</rhyme></l>
        <l id="s8:l4" met="4" type="+-">Krachtig door sijn geest tot <rhyme label="b" type="m" corresp="#s8:l3">hem</rhyme>.</l>
        <l id="s8:l5" met="4" type="+-">Hy wil u, met liefd', <rhyme label="c" type="f">omringen</rhyme></l>
        <l id="s8:l6" met="4" type="+-">Met geduurig vrolijk <rhyme label="c" type="f" corresp="#s8:l5">singen</rhyme></l>
        <l id="s8:l7" met="4" type="+-">Van sijn heil, welk ons <rhyme label="d" type="m">versoet</rhyme></l>
        <l id="s8:l8" met="4" type="+-">Alle ramp en <rhyme label="d" type="m" corresp="#s8:l7">tegenspoet</rhyme>.</l>
      </lg>
    </lg>
  </text>

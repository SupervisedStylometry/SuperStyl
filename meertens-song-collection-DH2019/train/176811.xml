  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Laet ons loven met woorden <rhyme label="a" type="m">schoon</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Den groten Godt in ‘s Hemels <rhyme label="a" type="m" corresp="#s1:l1">Troon</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">En singhen <rhyme label="b" type="f">allegader</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">O ghy almachtich Godt en <rhyme label="c" type="m">Heer</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">U behoort allen prijs en <rhyme label="c" type="m" corresp="#s1:l4">eer</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Lieve Hemelsche <rhyme label="b" type="f" corresp="#s1:l3">Vader</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Voor u, o Godt, verschijnen <rhyme label="d" type="m">wy</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">En buyghen oock de knyen <rhyme label="d" type="m" corresp="#s1:l7">vry</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Ons herten en <rhyme label="e" type="f">begheeren</rhyme>:</l>
        <l id="s1:l10" met="4" type="-+">Reynicht doch, Heer, onsen <rhyme label="f" type="m">mont</rhyme>,</l>
        <l id="s1:l11" met="4" type="+-">Ons lippen en ons herten <rhyme label="f" type="m" corresp="#s1:l10">gront</rhyme>,</l>
        <l id="s1:l12" met="3" type="-+">Dat wy u moghen <rhyme label="e" type="f" corresp="#s1:l9">eeren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">En prijsen u tot aller <rhyme label="a" type="m">tijdt</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Want wy bekennen dat ghy <rhyme label="a" type="m" corresp="#s2:l1">zijt</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Almachtich, <rhyme label="b" type="f">over-vloedich</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Ghenoechsaem vol van alle <rhyme label="c" type="m">goet</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">En gheenen ander die sulcks <rhyme label="c" type="m" corresp="#s2:l4">doet</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Oft sy schoon zijn <rhyme label="b" type="f" corresp="#s2:l3">hoochmoedich</rhyme></l>
        <l id="s2:l7" met="4" type="-+">Ghy leeft altijdt ende <rhyme label="d" type="m">regheert</rhyme>:</l>
        <l id="s2:l8" met="4" type="-+">Daerom wordt ghy met recht <rhyme label="d" type="m" corresp="#s2:l7">ghe-eert</rhyme></l>
        <l id="s2:l9" met="3" type="-+">Billick souden u <rhyme label="e" type="f">loven</rhyme>,</l>
        <l id="s2:l10" met="4" type="-+">Den Hemel en ‘t Aertrijck <rhyme label="f" type="m">gheheel</rhyme>,</l>
        <l id="s2:l11" met="4" type="+-">En wat daer heeft leven en <rhyme label="f" type="m" corresp="#s2:l10">ziel</rhyme>,</l>
        <l id="s2:l12" met="3" type="-+">Op aerden en daer <rhyme label="e" type="f" corresp="#s2:l9">boven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Noch souden wy boven dit <rhyme label="a" type="m">al</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">U billick loven met <rhyme label="a" type="m" corresp="#s3:l1">gheschal</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Eer ende prijs <rhyme label="b" type="f">op-gheven</rhyme>:</l>
        <l id="s3:l4" met="4" type="-+">Want ghy hebt ons gheschapen <rhyme label="c" type="m">naeckt</rhyme>:</l>
        <l id="s3:l5" met="4" type="-+">En naer uwen Beelde <rhyme label="c" type="m" corresp="#s3:l4">ghemaeckt</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Gheeft ons ademen ‘t <rhyme label="b" type="f" corresp="#s3:l3">leven</rhyme>:</l>
        <l id="s3:l7" met="4" type="-+">En dat wy oock ghebruycken <rhyme label="d" type="m">nu</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">Dat komt ons altemael van <rhyme label="d" type="m" corresp="#s3:l7">u</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Hebt ons uyt veel <rhyme label="e" type="f">ellende</rhyme>,</l>
        <l id="s3:l10" met="4" type="-+">Deur Christus Bloedt diere <rhyme label="f" type="m">ghekocht</rhyme>,</l>
        <l id="s3:l11" met="4" type="+-">Van verrens nae by <rhyme label="f" type="m" corresp="#s3:l10">ghebrocht</rhyme>!</l>
        <l id="s3:l12" met="3" type="-+">Ghelijck de <rhyme label="e" type="f" corresp="#s3:l9">wel-bekende</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Als wy waren in zonden <rhyme label="a" type="m">doodt</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Holpt ghy ons, Heere, uyt der <rhyme label="a" type="m" corresp="#s4:l1">noot</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Hebt ons van ‘t strick <rhyme label="b" type="f">ontbonden</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Door u beminden lieven <rhyme label="c" type="m">Soon</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Gekomen uyt ‘s Hemels <rhyme label="c" type="m" corresp="#s4:l4">Troon</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Dien ghy ons hebt <rhyme label="b" type="f" corresp="#s4:l3">ghesonden</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Gaeft hem over tot onsen <rhyme label="d" type="m">troost</rhyme>,</l>
        <l id="s4:l8" met="4" type="-+">Die heeft ons van der doodt <rhyme label="d" type="m" corresp="#s4:l7">verloost</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">Door sijn lijden en <rhyme label="e" type="f">sterven</rhyme>,</l>
        <l id="s4:l10" met="4" type="-+">Tot sijn ghemeynschap in sijn <rhyme label="f" type="m">Rijck</rhyme></l>
        <l id="s4:l11" met="4" type="+-">Beriep ghy ons, Heer, al <rhyme label="f" type="m" corresp="#s4:l10">ghelijck</rhyme></l>
        <l id="s4:l12" met="3" type="-+">Boven veel die <rhyme label="e" type="f" corresp="#s4:l9">verderven</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Reyn hebt ghy ons ghewasschen <rhyme label="a" type="m">klaer</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Van zonden dat is <rhyme label="a" type="m" corresp="#s5:l1">openbaer</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Vergheven ons <rhyme label="b" type="f">misdaden</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">En wilt noch onse zonden <rhyme label="c" type="m">quaedt</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">En overtreden vroech en <rhyme label="c" type="m" corresp="#s5:l4">laet</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Vergheven uyt <rhyme label="b" type="f" corresp="#s5:l3">ghenaden</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">En daerom, o Godt met <rhyme label="d" type="m">bescheyt</rhyme>,</l>
        <l id="s5:l8" met="4" type="-+">Loven wy u met <rhyme label="d" type="m" corresp="#s5:l7">billickheyt</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">Voor alle <rhyme label="e" type="f">Creatuyren</rhyme>,</l>
        <l id="s5:l10" met="4" type="-+">Die ghy gheschapen hebt <rhyme label="f" type="m">voorwaer</rhyme>,</l>
        <l id="s5:l11" met="4" type="+-">Hier toe zijn wy te swack <rhyme label="f" type="m" corresp="#s5:l10">eenpaer</rhyme>,</l>
        <l id="s5:l12" met="3" type="-+">‘t Is ‘t gheen dat wy <rhyme label="e" type="f" corresp="#s5:l9">betruyren</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Te onvolkomen rechte <rhyme label="a" type="m">voort</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Zijn wy, o Heer, (soo dat <rhyme label="a" type="m" corresp="#s6:l1">behoort</rhyme>)</l>
        <l id="s6:l3" met="3" type="-+">Ghenoechsaem te <rhyme label="b" type="f">verklaren</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Lof eer, en prijs, soo ghy zijt <rhyme label="c" type="m">weerdt</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Daerom gheeft ons nae ons <rhyme label="c" type="m" corresp="#s6:l4">begheert</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">U Hemelsche <rhyme label="b" type="f" corresp="#s6:l3">heyrscharen</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">U Enghelen met haer <rhyme label="d" type="m">kracht</rhyme>,</l>
        <l id="s6:l8" met="4" type="-+">Die voor u staen dach ende <rhyme label="d" type="m" corresp="#s6:l7">nacht</rhyme></l>
        <l id="s6:l9" met="3" type="-+">Te helpen met haer <rhyme label="e" type="f">waerde</rhyme>,</l>
        <l id="s6:l10" met="4" type="-+">En daer toe oock wat roert en <rhyme label="f" type="m">sweeft</rhyme>,</l>
        <l id="s6:l11" met="4" type="+-">Dat leven ende adem <rhyme label="f" type="m" corresp="#s6:l10">heeft</rhyme>,</l>
        <l id="s6:l12" met="3" type="-+">In Hemel ende <rhyme label="e" type="f" corresp="#s6:l9">Aerde</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Krachtich in ‘t wesen <rhyme label="a" type="m">onvertsaecht</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Te doen, o Heer, dat u <rhyme label="a" type="m" corresp="#s7:l1">behaecht</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Dat dees ons helpen <rhyme label="b" type="f">prijsen</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Loven en dancken heel <rhyme label="c" type="m">bequaem</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Ghebenedijen uwen <rhyme label="c" type="m" corresp="#s7:l4">Naem</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">En u eere <rhyme label="b" type="f" corresp="#s7:l3">bewijsen</rhyme>:</l>
        <l id="s7:l7" met="4" type="-+">Ghy die daer sit in uwe <rhyme label="d" type="m">ste</rhyme>,</l>
        <l id="s7:l8" met="4" type="-+">Een Heylich, Heylich, <rhyme label="d" type="m" corresp="#s7:l7">Heylighe</rhyme>,</l>
        <l id="s7:l9" met="3" type="-+">Godt boven alle <rhyme label="e" type="f">Goden</rhyme>,</l>
        <l id="s7:l10" met="4" type="-+">Vol word’ de aerd’ van u <rhyme label="f" type="m">goetheyt</rhyme></l>
        <l id="s7:l11" met="4" type="+-">En van uwe <rhyme label="f" type="m" corresp="#s7:l10">gherechticheyt</rhyme>,</l>
        <l id="s7:l12" met="3" type="-+">Naer u Heyl’ghe <rhyme label="e" type="f" corresp="#s7:l9">Gheboden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Om nsent wil also ‘t <rhyme label="a" type="m">betaemt</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Wordt ghy een goedigh Godt <rhyme label="a" type="m" corresp="#s8:l1">ghenaemt</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Als ghy vergheeft ons <rhyme label="b" type="f">zonden</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Die groot zijn ende <rhyme label="c" type="m">menichfout</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Waer in wy zijn gheweest te <rhyme label="c" type="m" corresp="#s8:l4">stout</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Met veel ydele <rhyme label="b" type="f" corresp="#s8:l3">vonden</rhyme>:</l>
        <l id="s8:l7" met="4" type="-+">O Heere Godt vergheeft ons <rhyme label="d" type="m">doch</rhyme></l>
        <l id="s8:l8" met="4" type="-+">Ende bewaert ons voor ‘t <rhyme label="d" type="m" corresp="#s8:l7">bedroch</rhyme>,</l>
        <l id="s8:l9" met="3" type="-+">Uwe Kinders <rhyme label="e" type="f">ghepresen</rhyme>,</l>
        <l id="s8:l10" met="4" type="-+">Behoet voor alle zond’ en <rhyme label="f" type="m">schant</rhyme>,</l>
        <l id="s8:l11" met="4" type="+-">Waer datse woonen in het <rhyme label="f" type="m" corresp="#s8:l10">landt</rhyme>,</l>
        <l id="s8:l12" met="3" type="-+">Wilt haer ghenadigh <rhyme label="e" type="f" corresp="#s8:l9">wesen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Komt te hulpe, gheeft ons en <rhyme label="a" type="m">haer</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Een ghehoorsaem herte daer <rhyme label="a" type="m" corresp="#s9:l1">naer</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Vervult met uwen <rhyme label="b" type="f">Gheeste</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Op-rechte wijsheyt en <rhyme label="c" type="m">verstant</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Om te houden des vredens <rhyme label="c" type="m" corresp="#s9:l4">bandt</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Willich in ‘t minst en ‘t <rhyme label="b" type="f" corresp="#s9:l3">meeste</rhyme>:</l>
        <l id="s9:l7" met="4" type="-+">Ghedenckt haerder Heer, die zijn <rhyme label="d" type="m">swack</rhyme>,</l>
        <l id="s9:l8" met="4" type="-+">En die nu lijden <rhyme label="d" type="m" corresp="#s9:l7">onghemack</rhyme>,</l>
        <l id="s9:l9" met="3" type="-+">Om uwen Naem <rhyme label="e" type="f">alleyne</rhyme>,</l>
        <l id="s9:l10" met="4" type="-+">Die den uwen lijden <rhyme label="f" type="m">aendoen</rhyme>,</l>
        <l id="s9:l11" met="4" type="+-">Vergheeft hen hare zonden <rhyme label="f" type="m" corresp="#s9:l10">koen</rhyme>,</l>
        <l id="s9:l12" met="3" type="-+">Sy weetent niet <rhyme label="e" type="f" corresp="#s9:l9">ghemeyne</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Knechten o Heer nae uwen <rhyme label="a" type="m">sin</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Seynt ons dat sy doen groot <rhyme label="a" type="m" corresp="#s10:l1">ghewin</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">In uwen Ooghst <rhyme label="b" type="f">voor-handen</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Voor valsche Leere ons <rhyme label="c" type="m">bewaert</rhyme></l>
        <l id="s10:l5" met="4" type="-+">Den Koninghen seer hooch <rhyme label="c" type="m" corresp="#s10:l4">vermaert</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Vorsten in aolle <rhyme label="b" type="f" corresp="#s10:l3">Landen</rhyme>:</l>
        <l id="s10:l7" met="4" type="-+">Weest ghenadich, verstant haer <rhyme label="d" type="m">gheest</rhyme>,</l>
        <l id="s10:l8" met="4" type="-+">En die daer nu in nooden <rhyme label="d" type="m" corresp="#s10:l7">leeft</rhyme>,</l>
        <l id="s10:l9" met="3" type="-+">Arm ellendigh <rhyme label="e" type="f">verlaten</rhyme>,</l>
        <l id="s10:l10" met="4" type="-+">Verlaetse niet, ‘t is ons <rhyme label="f" type="m">Ghebedt</rhyme>,</l>
        <l id="s10:l11" met="4" type="+-">En ons begheeren, hier op <rhyme label="f" type="m" corresp="#s10:l10">let</rhyme>,</l>
        <l id="s10:l12" met="3" type="-+">O Heer komt haer te <rhyme label="e" type="f" corresp="#s10:l9">baten</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Ghy gheloovighe in ‘t <rhyme label="a" type="m">ghemeyn</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Heft op u hert en handen <rhyme label="a" type="m" corresp="#s11:l1">reyn</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Alleluya wilt <rhyme label="b" type="f">singhen</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Hem die is, was, en komen <rhyme label="c" type="m">sal</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Prijst doch den Name lief <rhyme label="c" type="m" corresp="#s11:l4">ghetal</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Des Scheppers aller <rhyme label="b" type="f" corresp="#s11:l3">dinghen</rhyme>:</l>
        <l id="s11:l7" met="4" type="-+">Lof, eer en prijs, en <rhyme label="d" type="m">Majesteyt</rhyme>,</l>
        <l id="s11:l8" met="4" type="-+">Zy onsen Godt in <rhyme label="d" type="m" corresp="#s11:l7">eeuwicheyt</rhyme>,</l>
        <l id="s11:l9" met="3" type="-+">Van ons alle te <rhyme label="e" type="f">samen</rhyme>:</l>
        <l id="s11:l10" met="4" type="-+">In sijnen Naem vergadert <rhyme label="f" type="m">hier</rhyme>,</l>
        <l id="s11:l11" met="4" type="+-">Elck singhe nu seer <rhyme label="f" type="m" corresp="#s11:l10">goedertier</rhyme></l>
        <l id="s11:l12" met="3" type="-+">Loflijck met vreuchden, <rhyme label="e" type="f" corresp="#s11:l9">Amen</rhyme>.</l>
      </lg>
    </lg>
  </text>

    <tags/>
    <melody>Wat is ons al vreugde gegeven</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">ô Hoe schoon zien we uit de <rhyme label="a" type="f">kimmen</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">De ochtendzon met luister <rhyme label="a" type="f" corresp="#s1:l1">klimmen</rhyme>!</l>
        <l id="s1:l3" met="4" type="+-">Zy verlicht, door heldren <rhyme label="b" type="m">glans</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">'t Vlak der zee, en 's hemels <rhyme label="b" type="m" corresp="#s1:l3">trans</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Zy zal, langs de kalme <rhyme label="a" type="f">baaren</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">'t Flaauw verschiet ras op doen <rhyme label="a" type="f" corresp="#s2:l1">klaaren</rhyme>;</l>
        <l id="s2:l3" met="4" type="+-">Alles wat het oog <rhyme label="b" type="m">ontmoet</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Siert zy door haar' purpren <rhyme label="b" type="m" corresp="#s2:l3">gloed</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Verr' van groene <rhyme label="a" type="f">lustprieëlen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Hoort men hier geen voglen <rhyme label="a" type="f" corresp="#s3:l1">kweelen</rhyme>;</l>
        <l id="s3:l3" met="4" type="+-">Maar der winden zagt <rhyme label="b" type="m">geruisch</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Streelt ons oor, by 't <rhyme label="b" type="m" corresp="#s3:l3">zeegebruisch</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">In deeze onbewoonde <rhyme label="a" type="f">streeken</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Hoort men thans een <rhyme label="a" type="f" corresp="#s4:l1">vreugde-teken</rhyme>:</l>
        <l id="s4:l3" met="4" type="+-">'t Scheepslied klinkt aan allen <rhyme label="b" type="m">kant</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Van het dek, of uit het <rhyme label="b" type="m" corresp="#s4:l3">wand</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Blaauwe bergen, groene <rhyme label="a" type="f">zoomen</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Ziet men beurtlings langs de <rhyme label="a" type="f" corresp="#s5:l1">zoomen</rhyme>;</l>
        <l id="s5:l3" met="4" type="+-">Maar, daar alles 't oog <rhyme label="b" type="m">ontvlugt</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Houdt men niets dan zee en <rhyme label="b" type="m" corresp="#s5:l3">lucht</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Vrolyk, mannen! wel te <rhyme label="a" type="f">vréden</rhyme>!</l>
        <l id="s6:l2" met="4" type="+-">Vreezen wy geen <rhyme label="a" type="f" corresp="#s6:l1">tegenheden</rhyme>:</l>
        <l id="s6:l3" met="4" type="+-">Door zyn kunde en <rhyme label="b" type="m">overleg</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Wyst de Stuurman ons den <rhyme label="b" type="m" corresp="#s6:l3">weg</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Hy, die veilig wenscht te <rhyme label="a" type="f">landen</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Zal ons willens niet doen <rhyme label="a" type="f" corresp="#s7:l1">stranden</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Maar reist vry, op zyn <rhyme label="b" type="m">compas</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Langs den ruimen <rhyme label="b" type="m" corresp="#s7:l3">waterplas</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Is hy trouw in zyne <rhyme label="a" type="f">pligten</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Dat wy de onzen óók <rhyme label="a" type="f" corresp="#s8:l1">verrichten</rhyme>:</l>
        <l id="s8:l3" met="4" type="+-">Braave Krygsliên zyn <rhyme label="b" type="m">altyd</rhyme></l>
        <l id="s8:l4" met="4" type="+-">Aan hunn' eed en pligt <rhyme label="b" type="m" corresp="#s8:l3">gewyd</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Ja! Zo wy ons braaf <rhyme label="a" type="f">gedragen</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Dan zal onze heilzon <rhyme label="a" type="f" corresp="#s9:l1">dagen</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Even schoon als 't <rhyme label="b" type="m">morgenlicht</rhyme></l>
        <l id="s9:l4" met="4" type="+-">Thans verryst voor ons <rhyme label="b" type="m" corresp="#s9:l3">gezigt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Verblijt u al ghy Christen <rhyme label="a" type="m">schaer</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">En wilt nu vrolijck <rhyme label="b" type="f">singhen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Prijst Godt onsen Hemelsche <rhyme label="a" type="m" corresp="#s1:l1">Vaer</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En wilt hem lof <rhyme label="b" type="f" corresp="#s1:l2">toe-bringhen</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Want hy door sijn <rhyme label="c" type="m">Barmhertigheyt</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Den Messias, die was <rhyme label="c" type="m" corresp="#s1:l5">voorseyt</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Ons goedich heeft <rhyme label="d" type="f">ghegheven</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">Christum den Heer in <rhyme label="e" type="m">Israel</rhyme>,</l>
        <l id="s1:l9" met="4" type="-+">Onsen Heylandt <rhyme label="e" type="m" corresp="#s1:l8">Emanuel</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">Des wilt in vreuchden <rhyme label="d" type="f" corresp="#s1:l7">leven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Siet een vrucht der <rhyme label="a" type="m">gherechticheyt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Heerlijck, seer hoogh <rhyme label="b" type="f">ghepresen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">De Ster in Iacob <rhyme label="a" type="m" corresp="#s2:l1">toe-gheseyt</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Is nu klaer <rhyme label="b" type="f" corresp="#s2:l2">op-gheresen</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">De Leeuw van Iuda groot van <rhyme label="c" type="m">kracht</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Een stercke Helt, vervult met <rhyme label="c" type="m" corresp="#s2:l5">macht</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Het Zaet seer hooch van <rhyme label="d" type="f">weerden</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">Waer door wy worden breet en <rhyme label="e" type="m">wijt</rhyme></l>
        <l id="s2:l9" met="4" type="-+">Zalich ende <rhyme label="e" type="m" corresp="#s2:l8">ghebenedijt</rhyme>,</l>
        <l id="s2:l10" met="3" type="-+">Is ghekomen op <rhyme label="d" type="f" corresp="#s2:l7">eerden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Des weest niet stil, o <rhyme label="a" type="m">Christenheyt</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Maer dancket Godt van <rhyme label="b" type="f">boven</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">U hert en ziele zy <rhyme label="a" type="m" corresp="#s3:l1">bereyt</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Stadich om Godt te <rhyme label="b" type="f" corresp="#s3:l2">loven</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Want ons een Kint is nu <rhyme label="c" type="m">ghebooren</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Dat ons verlost van Godes <rhyme label="c" type="m" corresp="#s3:l5">tooren</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">En brenght ons tot <rhyme label="d" type="f">ghenaden</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">Des singhet al van herten <rhyme label="e" type="m">bly</rhyme></l>
        <l id="s3:l9" met="4" type="-+">Halleluia, ghelooft God <rhyme label="e" type="m" corresp="#s3:l8">zy</rhyme></l>
        <l id="s3:l10" met="3" type="-+">Van alle sijn <rhyme label="d" type="f" corresp="#s3:l7">weldaden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Dit Kindeken, <rhyme label="a" type="m">ghenade-rijck</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Is Godes Soon <rhyme label="b" type="f">ghepresen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Van eener Maghet <rhyme label="a" type="m" corresp="#s4:l1">suyverlijck</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Gheboren, soo wy <rhyme label="b" type="f" corresp="#s4:l2">lesen</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Te Bethlehem in ‘t Iootsche <rhyme label="c" type="m">Landt</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Ghenaemt Iesus, onsen <rhyme label="c" type="m" corresp="#s4:l5">Heylandt</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Een Kindeken seer <rhyme label="d" type="f">reene</rhyme>:</l>
        <l id="s4:l8" met="4" type="-+">Soo ons dit Kint niet waer <rhyme label="e" type="m">gheboren</rhyme>,</l>
        <l id="s4:l9" met="4" type="-+">Wy bleven altemael <rhyme label="e" type="m" corresp="#s4:l8">verloren</rhyme>,</l>
        <l id="s4:l10" met="3" type="-+">Het brenght ons uyt <rhyme label="d" type="f" corresp="#s4:l7">gheweene</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Des looft den Heer, ghy Christ’nen <rhyme label="a" type="m">al</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Van sijn groote <rhyme label="b" type="f">weldaden</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Die tot ons in dit Aertsche <rhyme label="a" type="m" corresp="#s5:l1">dal</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Omm ons van zond’ <rhyme label="b" type="f" corresp="#s5:l2">t’ontladen</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Van boven uyt des Hemels <rhyme label="c" type="m">throon</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Ghesonden heeft sijn lieven <rhyme label="c" type="m" corresp="#s5:l5">Soon</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Wilt hem hertelijck <rhyme label="d" type="f">prijsen</rhyme>,</l>
        <l id="s5:l8" met="4" type="-+">Singht lof en danck minst ende <rhyme label="e" type="m">meest</rhyme></l>
        <l id="s5:l9" met="4" type="-+">Godt Vader, Soon, en Heyl’ghen <rhyme label="e" type="m" corresp="#s5:l8">Geest</rhyme>,</l>
        <l id="s5:l10" met="3" type="-+">Wilt Godt eere <rhyme label="d" type="f" corresp="#s5:l7">bewijsen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Wy dancken dy Godt Vader <rhyme label="a" type="m">rijck</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">U loven wy van <rhyme label="b" type="f">herten</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Wy prijsen dy alle <rhyme label="a" type="m" corresp="#s6:l1">ghelijck</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Ghy helpet ons uyt <rhyme label="b" type="f" corresp="#s6:l2">smerten</rhyme>:</l>
        <l id="s6:l5" met="4" type="-+">O Godes Soon u dancken <rhyme label="c" type="m">wy</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Ghy die ons maeckt van zonden <rhyme label="c" type="m" corresp="#s6:l5">vry</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">En brenght ons tot <rhyme label="d" type="f">ghenaden</rhyme>,</l>
        <l id="s6:l8" met="4" type="-+">O Heylighe <rhyme label="e" type="m">Drie-eenigheyt</rhyme>,</l>
        <l id="s6:l9" met="4" type="-+">Weest ghelooft in der <rhyme label="e" type="m" corresp="#s6:l8">eeuwigheyt</rhyme></l>
        <l id="s6:l10" met="3" type="-+">Van alle weldaet, <rhyme label="d" type="f" corresp="#s6:l7">Amen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

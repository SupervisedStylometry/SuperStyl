    <melody>Hilf Gott wie geht das immer zu</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">WAt trotst ghy op dijn boosheyt <rhyme label="a" type="m">doch</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Ghy Tyran wreet end' <rhyme label="b" type="f">machtich</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Godes barmherticheyt duert <rhyme label="a" type="m" corresp="#s1:l1">noch</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Daeg' lijcx sterck end' wel <rhyme label="b" type="f" corresp="#s1:l2">Crachtich</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Nae schalcheyt dijn valsch' Tonge <rhyme label="c" type="m">tracht</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Snijt scherper dan een scheermes <rhyme label="c" type="m" corresp="#s1:l5">mach</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Bedriecht sonder <rhyme label="d" type="f">bekeeren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Het boos bemint ghy meer dan <rhyme label="a" type="m">t'goet</rhyme></l>
        <l id="s2:l2" met="3" type="-+">End' Valscheyt meer dan <rhyme label="b" type="f">t'Rechte</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Ghy Lieft wat gaet nae dijnen <rhyme label="a" type="m" corresp="#s2:l1">Moet</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">End' wat verderven <rhyme label="b" type="f" corresp="#s2:l2">plechte</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Met valscher Tonghen, dat is <rhyme label="c" type="m">waer</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Dies sal dy Godt oock gants en <rhyme label="c" type="m" corresp="#s2:l5">gaer</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Aff breken end' <rhyme label="d" type="f">verstooren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Hy sal dy heel te slaen <rhyme label="a" type="m">valiant</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">End' wter hut wech <rhyme label="b" type="f">Rucken</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">End' uwen Wortel wt het <rhyme label="a" type="m" corresp="#s3:l1">Landt</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Der Levenden wt <rhyme label="b" type="f" corresp="#s3:l2">plucken</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Dat sullen sien d'Oprechten <rhyme label="c" type="m">al</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Haer vreesen, end' dijn <rhyme label="c" type="m" corresp="#s3:l5">Ongheval</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Beschimpen end' <rhyme label="d" type="f">Belachen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Siet, dees hielt Godt niet voor syn <rhyme label="a" type="m">Macht</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Verliet hem op syn <rhyme label="b" type="f">Goeden</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Hy was seer Rijck en groot <rhyme label="a" type="m" corresp="#s4:l1">gheacht</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">En leefd' in <rhyme label="b" type="f" corresp="#s4:l2">Overvloeden</rhyme>.</l>
        <l id="s4:l5" met="4" type="-+">Hy was machtich om schaed' te <rhyme label="c" type="m">doen</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Maer ick sal int huys Godes <rhyme label="c" type="m" corresp="#s4:l5">schoon</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Als een Olijffboom <rhyme label="d" type="f">groyen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Want ick verlaet my <rhyme label="a" type="m">Eewelijck</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Op Gods goetheyt <rhyme label="b" type="f">Certeyne</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Dy HEER wil Eewich Dancken <rhyme label="a" type="m" corresp="#s5:l1">ick</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Ghy maeckt het wel <rhyme label="b" type="f" corresp="#s5:l2">Alleyne</rhyme>.</l>
        <l id="s5:l5" met="4" type="-+">Op uwen Naem ick wachten <rhyme label="c" type="m">sal</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Die goet is voor de Heyl'ghen <rhyme label="c" type="m" corresp="#s5:l5">al</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Die steedts hem Loven <rhyme label="d" type="f">blijde</rhyme>.</l>
      </lg>
    </lg>
  </text>

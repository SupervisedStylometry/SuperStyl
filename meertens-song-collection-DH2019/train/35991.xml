  <author>Herman Harts</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">THabor glorieuse <rhyme label="a" type="m">bergh</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Vloedt nu honich, ende <rhyme label="a" type="m" corresp="#s1:l1">mergh</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Waer den Heer de Godt van <rhyme label="b" type="f">Bethel</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Stelt in volle <rhyme label="c" type="m">Sonneschyn</rhyme></l>
        <l id="s1:l5" met="4" type="+-">In de wolcken zynen <rhyme label="b" type="f" corresp="#s1:l3">sethel</rhyme>;</l>
        <l id="s1:l6" met="4" type="+-">'t Is, het is hier toch goet <rhyme label="c" type="m" corresp="#s1:l4">syn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Ey ja! Marcus wat ghy <rhyme label="a" type="m">seght</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Docht u Petrus dan soo <rhyme label="a" type="m" corresp="#s2:l1">slecht</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Als hy daer om t'innich <rhyme label="b" type="f">smaken</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Van die liefelijcke <rhyme label="c" type="m">Mem</rhyme></l>
        <l id="s2:l5" met="4" type="+-">VVilde Tabernakel <rhyme label="b" type="f" corresp="#s2:l3">maken</rhyme>?</l>
        <l id="s2:l6" met="4" type="+-">VVaer ick daer, ick wou met <rhyme label="c" type="m" corresp="#s2:l4">hem</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Laet my smaken uwe <rhyme label="a" type="m">min</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Met den jonge <rhyme label="a" type="m" corresp="#s3:l1">Benjamin</rhyme>:</l>
        <l id="s3:l3" met="4" type="+-">Heere Jesus laet my <rhyme label="b" type="f">proeven</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Uwe salvingh, uwe <rhyme label="c" type="m">most</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Dat al maer en kan <rhyme label="b" type="f" corresp="#s3:l3">bedroeven</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">En verslaet niet mynen <rhyme label="c" type="m" corresp="#s3:l4">dorst</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">VVat is in de werelt <rhyme label="a" type="m">toch</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Dan geveynsthyt, dan <rhyme label="a" type="m" corresp="#s4:l1">bedroch</rhyme>?</l>
        <l id="s4:l3" met="4" type="+-">Eer, en ryckdom; haet, en <rhyme label="b" type="f">sorgen</rhyme>:</l>
        <l id="s4:l4" met="4" type="+-">Inden soeten <rhyme label="c" type="m">honichraet</rhyme></l>
        <l id="s4:l5" met="4" type="+-">Leydt de bitterhyt <rhyme label="b" type="f" corresp="#s4:l3">verborgen</rhyme>.</l>
        <l id="s4:l6" met="4" type="+-">'Kweet hoe't in de werelt <rhyme label="c" type="m" corresp="#s4:l4">gaet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Ick waer liever eenen <rhyme label="a" type="m">dagh</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Daer men u soet Aenschyn <rhyme label="a" type="m" corresp="#s5:l1">sagh</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Dan hondert, en dusent <rhyme label="b" type="f">jaren</rhyme></l>
        <l id="s5:l4" met="4" type="+-">In de vreught van desen <rhyme label="c" type="m">tyt</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">In de huysen der <rhyme label="b" type="f" corresp="#s5:l3">sondaren</rhyme>:</l>
        <l id="s5:l6" met="4" type="+-">VVaer gy niet gesien en <rhyme label="c" type="m" corresp="#s5:l4">syt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Hier en is ter werelt <rhyme label="a" type="m">niet</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Daer myn ooge rust in <rhyme label="a" type="m" corresp="#s6:l1">siet</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Swyght bedriger, swyght gy <rhyme label="b" type="f">Snepper</rhyme>.</l>
        <l id="s6:l4" met="4" type="+-">D'uytverkore Christe <rhyme label="c" type="m">ziel</rhyme></l>
        <l id="s6:l5" met="4" type="+-">Haeckt, en hanght aen hare <rhyme label="b" type="f" corresp="#s6:l3">Schepper</rhyme>.</l>
        <l id="s6:l6" met="4" type="+-">O! die haer daer vast aen <rhyme label="c" type="m" corresp="#s6:l4">hiel</rhyme>!</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Thabor glorieuse <rhyme label="a" type="m">bergh</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Vloedt nu honich, ende <rhyme label="a" type="m" corresp="#s7:l1">mergh</rhyme>:</l>
        <l id="s7:l3" met="4" type="+-">Waer den Heer de Godt van <rhyme label="b" type="f">Bethel</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Stelt in volle Sonne <rhyme label="c" type="m">schyn</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">In de wolcken zynen <rhyme label="b" type="f" corresp="#s7:l3">sethel</rhyme>.</l>
        <l id="s7:l6" met="4" type="+-">'t Is, het is hier toch goet <rhyme label="c" type="m" corresp="#s7:l4">syn</rhyme>.</l>
      </lg>
    </lg>

    <melody>Het waren negen soldaten</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Albertus Buitendyck</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">HOrt Maeghden: Leert al <rhyme label="a" type="f">heden</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Wat Sint Aeght rijck en <rhyme label="b" type="m">schoon</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Voor 't geloof heeft <rhyme label="a" type="f" corresp="#s1:l1">geleden</rhyme>;</l>
        <l id="s1:l4" met="3" type="-+">Hoe vroom zy heeft <rhyme label="a" type="f" corresp="#s1:l1">gestreden</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Om haer Maeghden <rhyme label="b" type="m" corresp="#s1:l2">Kroon</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Als Quintiaen laet <rhyme label="a" type="f">dooden</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Die niet met tongh en <rhyme label="b" type="m">le'en</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Wilden eere <rhyme label="a" type="f" corresp="#s2:l1">d'Afgoden</rhyme>;</l>
        <l id="s2:l4" met="3" type="-+">Sint Aeght hier mee toe <rhyme label="a" type="f" corresp="#s2:l1">nooden</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Door Aphrodies <rhyme label="b" type="m" corresp="#s2:l2">gebe'en</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Al leyt dees Maeght <rhyme label="a" type="f">gevangen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">By dese <rhyme label="b" type="m">Meer-rimin</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Zy, noch al d'helsche <rhyme label="a" type="f" corresp="#s3:l1">slangen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Konnen 't reyn vleesch <rhyme label="a" type="f" corresp="#s3:l1">ontfangen</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Na Quintianus <rhyme label="b" type="m" corresp="#s3:l2">zin</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Sijn hart verkeert <rhyme label="a" type="f">gedreven</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Was, door 't zien van Sint <rhyme label="b" type="m">Aeght</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Belooft haer te <rhyme label="a" type="f" corresp="#s4:l1">verheven</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Tot houw'lijck; al te <rhyme label="a" type="f" corresp="#s4:l1">geven</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Dat 't hart wenst, en tongh <rhyme label="b" type="m" corresp="#s4:l2">vraeght</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Wil zy Christum <rhyme label="a" type="f">versweeren</rhyme>;</l>
        <l id="s5:l2" met="3" type="-+">Verlaten haere <rhyme label="b" type="m">staet</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Daer by d'Afgoden <rhyme label="a" type="f" corresp="#s5:l1">eeren</rhyme>;</l>
        <l id="s5:l4" met="3" type="-+">Of sijn liefde <rhyme label="a" type="f" corresp="#s5:l1">verkeeren</rhyme></l>
        <l id="s5:l5" met="3" type="-+">In plagen zal, en <rhyme label="b" type="m" corresp="#s5:l2">haet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">'k Verfoey al uwe' <rhyme label="a" type="f">presenten</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Sprack, Godes waerde <rhyme label="b" type="m">schat</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Ick vrees geen <rhyme label="a" type="f" corresp="#s6:l1">dreygementen</rhyme>;</l>
        <l id="s6:l4" met="3" type="-+">Na de swaerdste <rhyme label="a" type="f" corresp="#s6:l1">tormenten</rhyme></l>
        <l id="s6:l5" met="3" type="-+">'k Hoop als de visch na 't <rhyme label="b" type="m" corresp="#s6:l2">nat</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Mijn leden al, en <rhyme label="a" type="f">handen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Bind, kapt, vilt, scheurt, breeckt, <rhyme label="b" type="m">wondt</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Sa! Sa! wilt ghy my <rhyme label="a" type="f" corresp="#s7:l1">branden</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Bereydt is <rhyme label="a" type="f" corresp="#s7:l1">d'offerhanden</rhyme>;</l>
        <l id="s7:l5" met="3" type="-+">Vol-doet uw' wil <rhyme label="b" type="m" corresp="#s7:l2">terstondt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Dit kond hy niet <rhyme label="a" type="f">verdragen</rhyme>;</l>
        <l id="s8:l2" met="3" type="-+">Na hare doodt hy <rhyme label="b" type="m">dorst</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Haer aensicht heeft <rhyme label="a" type="f" corresp="#s8:l1">geslagen</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Om haer noch meer te <rhyme label="a" type="f" corresp="#s8:l1">plagen</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Af-snijde laet haer <rhyme label="b" type="m" corresp="#s8:l2">borst</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Geen lijden doet haer <rhyme label="a" type="f">vreeze</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Als zy in 't Kercker <rhyme label="b" type="m">leydt</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Haer wonden zijn <rhyme label="a" type="f" corresp="#s9:l1">geneezen</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Door Sint Pieters <rhyme label="a" type="f" corresp="#s9:l1">by-weezen</rhyme>;</l>
        <l id="s9:l5" met="3" type="-+">En krijght haer <rhyme label="b" type="m" corresp="#s9:l2">gezondtheydt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Quintiaen heeft <rhyme label="a" type="f">bevolen</rhyme>:</l>
        <l id="s10:l2" met="3" type="-+">Leght haer nu <rhyme label="b" type="m">ongekrenckt</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Van het hooft tot de <rhyme label="a" type="f" corresp="#s10:l1">zolen</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Op 't vyer gemaeckt van <rhyme label="a" type="f" corresp="#s10:l1">kolen</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Met steenen kleyn <rhyme label="b" type="m" corresp="#s10:l2">vermenckt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Godt zonder te <rhyme label="a" type="f">verbeyden</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Veel straft in deze <rhyme label="b" type="m">tijdt</rhyme>.</l>
        <l id="s11:l3" met="3" type="-+">Biddende Sint Aeght <rhyme label="a" type="f" corresp="#s11:l1">scheyden</rhyme>;</l>
        <l id="s11:l4" met="3" type="-+">d' Engelen haer ziel <rhyme label="a" type="f" corresp="#s11:l1">leyden</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Al waers' is eeuwigh <rhyme label="b" type="m" corresp="#s11:l2">blijdt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

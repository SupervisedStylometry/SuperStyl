  <author>Philippus van Sorgen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Iesus. O Twijffelende <rhyme label="a" type="m">Maegt</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Hoe komt dat gy <rhyme label="a" type="m" corresp="#s1:l1">vertraegt</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Om tot my in te <rhyme label="b" type="f">komen</rhyme>;</l>
        <l id="s1:l4" met="3" type="-+">Indien gy sijt <rhyme label="c" type="m">belust</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Naer vrede, troost en <rhyme label="c" type="m" corresp="#s1:l4">rust</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Welkom dan sonder <rhyme label="b" type="f" corresp="#s1:l3">schromen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">O Heer ick kan niet <rhyme label="a" type="m">staen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Veel minder tot u <rhyme label="a" type="m" corresp="#s2:l1">gaen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Want ick en heb geen <rhyme label="b" type="f">voeten</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Mijn Ziel is dom en <rhyme label="c" type="m">grof</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Sy doet niet als in ‘t <rhyme label="c" type="m" corresp="#s2:l4">stof</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Gelijck een Mol te <rhyme label="b" type="f" corresp="#s2:l3">wroeten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">O Ziel komt <rhyme label="a" type="m">evenwel</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Met al dat vuyl <rhyme label="a" type="m" corresp="#s3:l1">gestel</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Ick sal u wel <rhyme label="b" type="f">vercieren</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Ick sal u leeren <rhyme label="c" type="m">gaen</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Op dese <rhyme label="c" type="m" corresp="#s3:l4">levens-baen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Mijn Geest die sal u <rhyme label="b" type="f" corresp="#s3:l3">stieren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Hoe soud ick durven <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Die alles noch <rhyme label="a" type="m" corresp="#s4:l1">ontbeer</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Ick ben naeckt en <rhyme label="b" type="f">elendig</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Van alle goet <rhyme label="c" type="m">ontbloot</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">De schaemte maeckt my <rhyme label="c" type="m" corresp="#s4:l4">root</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">U woorden sijn <rhyme label="b" type="f" corresp="#s4:l3">bestendig</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Kom binnen als <rhyme label="a" type="m">Vriendin</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Woont in mijn <rhyme label="a" type="m" corresp="#s5:l1">Huys-gesin</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Of wilt daer veel <rhyme label="b" type="f">verkeeren</rhyme>;</l>
        <l id="s5:l4" met="3" type="-+">Komt set u aen den <rhyme label="c" type="m">Dis</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Daer overvloedig <rhyme label="c" type="m" corresp="#s5:l4">is</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Al wat gy mogt <rhyme label="b" type="f" corresp="#s5:l3">ontbeeren</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ick vrees mijn stout <rhyme label="a" type="m">bestaen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Sou mijn niet wel <rhyme label="a" type="m" corresp="#s6:l1">vergaen</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Met reden mag ick <rhyme label="b" type="f">schromen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">En Heer gelijck gy <rhyme label="c" type="m">weet</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Ick heb geen <rhyme label="c" type="m" corresp="#s6:l4">Bruylofs-kleedt</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Om aen u Dis te <rhyme label="b" type="f" corresp="#s6:l3">komen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">O Ziele komt maer <rhyme label="a" type="m">naeckt</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Hier ben ick mee <rhyme label="a" type="m" corresp="#s7:l1">vermaeckt</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Ick sal u kleeren <rhyme label="b" type="f">geven</rhyme>:</l>
        <l id="s7:l4" met="3" type="-+">Gy moet eerst sijn <rhyme label="c" type="m">ontbloot</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">En aen u selven <rhyme label="c" type="m" corresp="#s7:l4">doot</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Soo gy met my sult <rhyme label="b" type="f" corresp="#s7:l3">leven</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Wel aen dan Heer ick <rhyme label="a" type="m">kom</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Ick word u <rhyme label="a" type="m" corresp="#s8:l1">eygendom</rhyme>:</l>
        <l id="s8:l3" met="3" type="-+">Gy spreeckt my na mijn <rhyme label="b" type="f">herte</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Gy sijt mijn <rhyme label="c" type="m">Medicijn</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Mijn kleet, mijn broot, mijn <rhyme label="c" type="m" corresp="#s8:l4">wijn</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Gy stilt en heelt mijn <rhyme label="b" type="f" corresp="#s8:l3">smerte</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Maer Ziel weet dit voor <rhyme label="a" type="m">af</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Soo ick u lust niet <rhyme label="a" type="m" corresp="#s9:l1">gaf</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Wilt daerom niet <rhyme label="b" type="f">verschricken</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Maer weest hier in <rhyme label="c" type="m">verblijdt</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Dat ick u op mijn <rhyme label="c" type="m" corresp="#s9:l4">tijdt</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Genoegsaem sal <rhyme label="b" type="f" corresp="#s9:l3">verquicken</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Ick kom dan op u <rhyme label="a" type="m">woort</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Tot in de binnen <rhyme label="a" type="m" corresp="#s10:l1">poort</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Van u Palais o <rhyme label="b" type="f">Heere</rhyme>;</l>
        <l id="s10:l4" met="3" type="-+">In plaetse van een <rhyme label="c" type="m">Roe</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Reyckt my u Scepter <rhyme label="c" type="m" corresp="#s10:l4">toe</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Soo sal my niemant <rhyme label="b" type="f" corresp="#s10:l3">deeren</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Hoe sijt gy nog soo <rhyme label="a" type="m">schuw</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Ick ben geneygt tot <rhyme label="a" type="m" corresp="#s11:l1">uw</rhyme>’,</l>
        <l id="s11:l3" met="3" type="-+">Schoon gy dat niet kont <rhyme label="b" type="f">voelen</rhyme>:</l>
        <l id="s11:l4" met="3" type="-+">Staet maer een weynig <rhyme label="c" type="m">stil</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">En laet u eygen <rhyme label="c" type="m" corresp="#s11:l4">wil</rhyme></l>
        <l id="s11:l6" met="3" type="-+">Niet meer soo driftig <rhyme label="b" type="f" corresp="#s11:l3">woelen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Mijn lust, mijn wil, mijn <rhyme label="a" type="m">drift</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Schenck ick u tot een <rhyme label="a" type="m" corresp="#s12:l1">gift</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Ey komt die gantsch <rhyme label="b" type="f">verpletten</rhyme>:</l>
        <l id="s12:l4" met="3" type="-+">Ach waer ick niet meer <rhyme label="c" type="m">ick</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">Maer Heer u wijs <rhyme label="c" type="m" corresp="#s12:l4">beschick</rhyme></l>
        <l id="s12:l6" met="3" type="-+">Schrijf ick voortaen geen <rhyme label="b" type="f" corresp="#s12:l3">wetten</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

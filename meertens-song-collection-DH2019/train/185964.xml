  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">FIllis ben je <rhyme label="a" type="m">kwaad</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Staak zulks, en volg wysen <rhyme label="a" type="m" corresp="#s1:l1">raad</rhyme>.</l>
        <l id="s1:l3" met="3" type="+-">Want een dorstig <rhyme label="b" type="m">Man</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">Stoort zich nimmer <rhyme label="b" type="m" corresp="#s1:l3">ân</rhyme>,</l>
        <l id="s1:l5" met="3" type="+-">Een' nortige <rhyme label="c" type="m">Vrouw</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Maar wel aan een lêge <rhyme label="b" type="m" corresp="#s1:l3">Kan</rhyme>,</l>
        <l id="s1:l7" met="5" type="+-">En gy wint doch niet, dan <rhyme label="d" type="m">verdriet</rhyme>,</l>
        <l id="s1:l8" met="3" type="+-">en vergeefs <rhyme label="c" type="m" corresp="#s1:l5">berouw</rhyme>.</l>
      </lg>
    </lg>

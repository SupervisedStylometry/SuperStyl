  <author>Jan Jansz. Deutel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">CHristus zijnde <rhyme label="a" type="f">verresen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Heeft veertigh daghen <rhyme label="b" type="m">hy</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Hem levendigh <rhyme label="a" type="f" corresp="#s1:l1">bewesen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Den Apostelen <rhyme label="b" type="m" corresp="#s1:l2">vry</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Op eenen Bergh te <rhyme label="b" type="m" corresp="#s1:l2">Bethany</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">Ierusalem <rhyme label="b" type="m" corresp="#s1:l2">by</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">D'opvaert <rhyme label="b" type="m" corresp="#s1:l2">Christi</rhyme></l>
        <l id="s1:l8" met="5" type="-+">Ten Hemel openbaer daer sagen <rhyme label="b" type="m" corresp="#s1:l2">sy</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Van den bergh der <rhyme label="a" type="f">Olijven</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Wedergekeert ind' <rhyme label="b" type="m">Stadt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Maria met de <rhyme label="a" type="f" corresp="#s2:l1">Wijven</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Oock by hen-lieden <rhyme label="b" type="m" corresp="#s2:l2">sat</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Vergadert op eenen solder, <rhyme label="b" type="m" corresp="#s2:l2">dat</rhyme></l>
        <l id="s2:l6" met="2" type="-+">Elck deughdigh <rhyme label="b" type="m" corresp="#s2:l2">vat</rhyme></l>
        <l id="s2:l7" met="2" type="-+">Neerstelijck <rhyme label="b" type="m" corresp="#s2:l2">bat</rhyme>,</l>
        <l id="s2:l8" met="5" type="-+">Om te ontfangen den beloofden <rhyme label="b" type="m" corresp="#s2:l2">schat</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Een Apostel <rhyme label="a" type="f">vercoren</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Hebben sy voor <rhyme label="b" type="m">Iudas</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Wiens bisdom was <rhyme label="a" type="f" corresp="#s3:l1">verloren</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">'Tlot viel op <rhyme label="b" type="m" corresp="#s3:l2">Mathias</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">En als nu Pincxster vervult <rhyme label="b" type="m" corresp="#s3:l2">was</rhyme>,</l>
        <l id="s3:l6" met="2" type="-+">Snellijck en <rhyme label="b" type="m" corresp="#s3:l2">ras</rhyme></l>
        <l id="s3:l7" met="2" type="-+">Een windt <rhyme label="b" type="m" corresp="#s3:l2">gheblas</rhyme></l>
        <l id="s3:l8" met="5" type="-+">Quam uyt den Hemel daer op't selve <rhyme label="b" type="m" corresp="#s3:l2">pas</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">'Thuys werdt vervult van <rhyme label="a" type="f">desen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Ghedeelde tongen <rhyme label="b" type="m">klaer</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Quamen vyerigh <rhyme label="a" type="f" corresp="#s4:l1">geresen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Op yeghelijck van <rhyme label="b" type="m" corresp="#s4:l2">haer</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Vol des Heylighen Gheest <rhyme label="b" type="m" corresp="#s4:l2">eerbaer</rhyme></l>
        <l id="s4:l6" met="2" type="-+">Werdt al die <rhyme label="b" type="m" corresp="#s4:l2">schaer</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">Wy lesen, <rhyme label="b" type="m" corresp="#s4:l2">maer</rhyme></l>
        <l id="s4:l8" met="5" type="-+">ontrent hondert en twintingh wasser <rhyme label="b" type="m" corresp="#s4:l2">daer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Sy predickten en <rhyme label="a" type="f">spraken</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Met ander tonghen <rhyme label="b" type="m">eest</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">En seyden sulcke <rhyme label="a" type="f" corresp="#s5:l1">saken</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Als haer in gaf den <rhyme label="b" type="m" corresp="#s5:l2">Gheest</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Veel Ioden die God hebben <rhyme label="b" type="m" corresp="#s5:l2">ghevreest</rhyme>,</l>
        <l id="s5:l6" met="2" type="-+">die quamen <rhyme label="b" type="m" corresp="#s5:l2">meest</rhyme></l>
        <l id="s5:l7" met="2" type="-+">Door dit <rhyme label="b" type="m" corresp="#s5:l2">tempeest</rhyme></l>
        <l id="s5:l8" met="5" type="-+">Om weten van desen den rechten <rhyme label="b" type="m" corresp="#s5:l2">keest</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Van onder 'sHemels <rhyme label="a" type="f">wolcken</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Woonden op dat <rhyme label="b" type="m">termijn</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Aldaer uyt alle <rhyme label="a" type="f" corresp="#s6:l1">volcken</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Elck zijn tael hoorde <rhyme label="b" type="m" corresp="#s6:l2">fijn</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Den eenen sprack uyt vreesens <rhyme label="b" type="m" corresp="#s6:l2">pijn</rhyme>,</l>
        <l id="s6:l6" met="2" type="-+">Wat wil dat <rhyme label="b" type="m" corresp="#s6:l2">zijn</rhyme>,</l>
        <l id="s6:l7" met="2" type="-+">D'ander in <rhyme label="b" type="m" corresp="#s6:l2">schijn</rhyme></l>
        <l id="s6:l8" met="5" type="-+">Van spot seyden, sy zijn vol soeten <rhyme label="b" type="m" corresp="#s6:l2">wijn</rhyme>;</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Petrus hem <rhyme label="a" type="f">excuseerde</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Van dronckenschap ter <rhyme label="b" type="m">noot</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Dat Ioel <rhyme label="a" type="f" corresp="#s7:l1">propheteerde</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Sprack hy, gheschiedt nu <rhyme label="b" type="m" corresp="#s7:l2">bloot</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Iesum van u ghekruyst ter <rhyme label="b" type="m" corresp="#s7:l2">doodt</rhyme>,</l>
        <l id="s7:l6" met="2" type="-+">dien heeft Godt <rhyme label="b" type="m" corresp="#s7:l2">groot</rhyme></l>
        <l id="s7:l7" met="2" type="-+">Verweckt <rhyme label="b" type="m" corresp="#s7:l2">minjoot</rhyme>,</l>
        <l id="s7:l8" met="5" type="-+">desen op ons den heyligen Gheest <rhyme label="b" type="m" corresp="#s7:l2">goot</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Doet boet alle te <rhyme label="a" type="f">same</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">En laet u doopen <rhyme label="b" type="m">vroet</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">In Iesu Christi <rhyme label="a" type="f" corresp="#s8:l1">name</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Tot verghevinghe <rhyme label="b" type="m" corresp="#s8:l2">soet</rhyme></l>
        <l id="s8:l5" met="4" type="-+">Van uwe sonden <rhyme label="b" type="m" corresp="#s8:l2">overvloet</rhyme>,</l>
        <l id="s8:l6" met="2" type="-+">Soo ghy die <rhyme label="b" type="m" corresp="#s8:l2">doet</rhyme>,</l>
        <l id="s8:l7" met="2" type="-+">De gave <rhyme label="b" type="m" corresp="#s8:l2">goet</rhyme></l>
        <l id="s8:l8" met="5" type="-+">des heylighen Gheests ontfanght ghy met <rhyme label="b" type="m" corresp="#s8:l2">spoet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Petrus heeft met zijn <rhyme label="a" type="f">preken</rhyme></l>
        <l id="s9:l2" met="3" type="-+">En krachtigh goet <rhyme label="b" type="m">vermaen</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Haerlieder hert <rhyme label="a" type="f" corresp="#s9:l1">ontsteken</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Sy lieten haer <rhyme label="b" type="m" corresp="#s9:l2">beraen</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">die zijn woordt geerne namen <rhyme label="b" type="m" corresp="#s9:l2">aen</rhyme></l>
        <l id="s9:l6" met="2" type="-+">Hebben daer <rhyme label="b" type="m" corresp="#s9:l2">saen</rhyme></l>
        <l id="s9:l7" met="2" type="-+">den Doop <rhyme label="b" type="m" corresp="#s9:l2">ontfaen</rhyme>,</l>
        <l id="s9:l8" met="5" type="-+">Haer werter by drie druysent <rhyme label="b" type="m" corresp="#s9:l2">toegedaen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Dese loofden den <rhyme label="a" type="f">Heere</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Bleven met goedt <rhyme label="b" type="m">opset</rhyme></l>
        <l id="s10:l3" met="3" type="-+">In d'Apostelsche <rhyme label="a" type="f" corresp="#s10:l1">leere</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">In die gemeynschap <rhyme label="b" type="m" corresp="#s10:l2">met</rhyme></l>
        <l id="s10:l5" met="4" type="-+">Brootbrekinge, na Christus <rhyme label="b" type="m" corresp="#s10:l2">Wet</rhyme>,</l>
        <l id="s10:l6" met="2" type="-+">End' in 't <rhyme label="b" type="m" corresp="#s10:l2">gebedt</rhyme>,</l>
        <l id="s10:l7" met="2" type="-+">End' oock quam <rhyme label="b" type="m" corresp="#s10:l2">het</rhyme></l>
        <l id="s10:l8" met="5" type="-+">Een vreese over alle Zielen <rhyme label="b" type="m" corresp="#s10:l2">net</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Haer Goedt was al ten <rhyme label="a" type="f">besten</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Elcken ter noodt <rhyme label="b" type="m">gemeyn</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">De Heer om te <rhyme label="a" type="f" corresp="#s11:l1">bevesten</rhyme></l>
        <l id="s11:l4" met="3" type="-+">'T Euangely <rhyme label="b" type="m" corresp="#s11:l2">certeyn</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">dede wonder dingen niet <rhyme label="b" type="m" corresp="#s11:l2">kleyn</rhyme></l>
        <l id="s11:l6" met="2" type="-+">Openbaer <rhyme label="b" type="m" corresp="#s11:l2">pleyn</rhyme></l>
        <l id="s11:l7" met="2" type="-+">Gheschien <rhyme label="b" type="m" corresp="#s11:l2">alleyn</rhyme></l>
        <l id="s11:l8" met="5" type="-+">Door zijn lieve Apostels handen <rhyme label="b" type="m" corresp="#s11:l2">reyn</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">'sGheests vruchten nu in <rhyme label="a" type="f">stede</rhyme></l>
        <l id="s12:l2" met="3" type="-+">T'onser <rhyme label="b" type="m">opvoedigheyt</rhyme></l>
        <l id="s12:l3" met="3" type="-+">Sijn liefde, vreughde, <rhyme label="a" type="f" corresp="#s12:l1">vrede</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Ende <rhyme label="b" type="m" corresp="#s12:l2">langhmoedigheyt</rhyme>,</l>
        <l id="s12:l5" met="4" type="-+">Vriendelijckheyt en <rhyme label="b" type="m" corresp="#s12:l2">goedigheydt</rhyme></l>
        <l id="s12:l6" met="2" type="-+">'Tgheloofs <rhyme label="b" type="m" corresp="#s12:l2">bescheyt</rhyme>,</l>
        <l id="s12:l7" met="2" type="-+"><rhyme label="b" type="m" corresp="#s12:l2">Sachtmoedigheyt</rhyme>,</l>
        <l id="s12:l8" met="5" type="-+">Maticheydt, tot der zielen <rhyme label="b" type="m" corresp="#s12:l2">spoedigheyt</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Broeders dit zijn de <rhyme label="a" type="f">vruchten</rhyme></l>
        <l id="s13:l2" met="3" type="-+">Daer men den boom aen <rhyme label="b" type="m">kent</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Of daer met soete <rhyme label="a" type="f" corresp="#s13:l1">luchten</rhyme></l>
        <l id="s13:l4" met="3" type="-+">'s Heeren Gheest is <rhyme label="b" type="m" corresp="#s13:l2">ontrent</rhyme>,</l>
        <l id="s13:l5" met="4" type="-+">Inden Olijfboom <rhyme label="b" type="m" corresp="#s13:l2">excellent</rhyme></l>
        <l id="s13:l6" met="2" type="-+"><rhyme label="b" type="m" corresp="#s13:l2">Gheplant-ghe-ent</rhyme>,</l>
        <l id="s13:l7" met="2" type="-+">Blijft <rhyme label="b" type="m" corresp="#s13:l2">ongheschent</rhyme></l>
        <l id="s13:l8" met="5" type="-+">Op Christum, Syons eenigh <rhyme label="b" type="m" corresp="#s13:l2">fundament</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

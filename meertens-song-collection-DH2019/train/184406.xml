  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">VOor 's Bruigoms oogen <rhyme label="a" type="f">zweeven</rhyme>.</l>
        <l id="s1:l2" met="3" type="-+">Is regte <rhyme label="b" type="m">zaaligheit</rhyme>;</l>
        <l id="s1:l3" met="3" type="-+">Een nimmer wank'lend <rhyme label="a" type="f" corresp="#s1:l1">leeven</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">In de <rhyme label="b" type="m" corresp="#s1:l2">verborgenheit</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Niets konnen, niets <rhyme label="c" type="f">verkiezen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Niets weeten, als met <rhyme label="d" type="m">lust</rhyme></l>
        <l id="s1:l7" met="3" type="-+">In Jesus zich <rhyme label="c" type="f" corresp="#s1:l5">verliezen</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Dat 's waare <rhyme label="d" type="m" corresp="#s1:l6">zielen-rust</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Men staat, van slaap <rhyme label="a" type="f">verreezen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">In Christus vrindschap <rhyme label="b" type="m">op</rhyme>;</l>
        <l id="s2:l3" met="3" type="-+">Men heeft geen straf te <rhyme label="a" type="f" corresp="#s2:l1">vreezen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">In 's Leevens ganschen <rhyme label="b" type="m" corresp="#s2:l2">loop</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Men eet en drinkt in <rhyme label="c" type="f">liefde</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Voelt honger en <rhyme label="d" type="m">gebrek</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Maar tot onz' eeuw'ge <rhyme label="c" type="f" corresp="#s2:l5">Liefde</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Is onze grootste <rhyme label="d" type="m" corresp="#s2:l6">trek</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Is dan de dag <rhyme label="a" type="f">verloopen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Zo sluit men, wel te <rhyme label="b" type="m">moÃª</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">En 't hart voor Christus <rhyme label="a" type="f" corresp="#s3:l1">open</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Zyn sluim'rend' oogen <rhyme label="b" type="m" corresp="#s3:l2">toe</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Ook worden in de <rhyme label="c" type="f">droomen</rhyme></l>
        <l id="s3:l6" met="3" type="-+">(Zou men in droomen <rhyme label="d" type="m">zyn</rhyme>)</l>
        <l id="s3:l7" met="3" type="-+">Geen beelden <rhyme label="c" type="f" corresp="#s3:l5">ingenomen</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Als Christus glans en <rhyme label="d" type="m" corresp="#s3:l6">schyn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Men blyft geduurig <rhyme label="a" type="f">waaken</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Eenmoedig, dag en <rhyme label="b" type="m">nacht</rhyme>.</l>
        <l id="s4:l3" met="3" type="-+">Zo is men op 't <rhyme label="a" type="f" corresp="#s4:l1">verzaaken</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Van al het aardsch, <rhyme label="b" type="m" corresp="#s4:l2">bedagt</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">In hooren, zien en <rhyme label="c" type="f">voelen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Hoort, ziet en voelt men <rhyme label="d" type="m">niet</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Als smerten ons <rhyme label="c" type="f" corresp="#s4:l5">doorwoelen</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Weet men niet wat <rhyme label="d" type="m" corresp="#s4:l6">geschiet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Gewis, wie eerst de <rhyme label="a" type="f">zonden</rhyme></l>
        <l id="s5:l2" met="3" type="-+">In Christus bloed <rhyme label="b" type="m">verdrenkt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">En ylings en van <rhyme label="a" type="f" corresp="#s5:l1">gronde</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Zich aan zyn Heiland <rhyme label="b" type="m" corresp="#s5:l2">schenkt</rhyme>:</l>
        <l id="s5:l5" met="3" type="-+">Die kan zeer heilig <rhyme label="c" type="f">hand'len</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">En kan vast anders <rhyme label="d" type="m">niet</rhyme>.</l>
        <l id="s5:l7" met="3" type="-+">O Jesus! leer ons <rhyme label="c" type="f" corresp="#s5:l5">wand'len</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Zo als 't uw Geest <rhyme label="d" type="m" corresp="#s5:l6">gebiedt</rhyme>.</l>
      </lg>
    </lg>
  </text>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Dat spiegel der <rhyme label="a" type="m">Dryvuldicheyt</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Verlicht der werelt <rhyme label="a" type="m" corresp="#s1:l1">duysterheyt</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Eya lieve <rhyme label="a" type="m" corresp="#s1:l1">Christenheyt</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Met lof en sang sijt nu <rhyme label="a" type="m" corresp="#s1:l1">bereyt</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Met frolicheyt, met <rhyme label="a" type="m" corresp="#s1:l1">eenicheyt</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Van nu tot in der <rhyme label="a" type="m" corresp="#s1:l1">eewicheyt</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Laet ons dat kindeken <rhyme label="b" type="f">singen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Godes moeder sonder <rhyme label="a" type="m">pijn</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Heeft gebaren een <rhyme label="a" type="m" corresp="#s2:l1">kindekijn</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Eya lieve <rhyme label="a" type="m" corresp="#s2:l1">Christenheyt</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Met lof en sang sijt nu <rhyme label="a" type="m" corresp="#s2:l1">bereyt</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Met frolicheyt, met <rhyme label="a" type="m" corresp="#s2:l1">eenicheyt</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Van nu tot in der <rhyme label="a" type="m" corresp="#s2:l1">eewicheyt</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Laet ons dat kindeken <rhyme label="b" type="f">singen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Hier legt het in dat <rhyme label="a" type="m">kribbekijn</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Dat wonder kintjen huys en <rhyme label="a" type="m" corresp="#s3:l1">fijn</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Eya lieve <rhyme label="a" type="m" corresp="#s3:l1">Christenheyt</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Met lof en sang sijt nu <rhyme label="a" type="m" corresp="#s3:l1">bereyt</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Met frolicheyt, met <rhyme label="a" type="m" corresp="#s3:l1">eenicheyt</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Van nu tot in der <rhyme label="a" type="m" corresp="#s3:l1">eewicheyt</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Laet ons dat kindeken <rhyme label="b" type="f">singen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Die Engelen loven al <rhyme label="a" type="m">gelijck</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Dit kindeken van <rhyme label="a" type="m" corresp="#s4:l1">hemelrijck</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Eya lieve <rhyme label="a" type="m" corresp="#s4:l1">Christenheyt</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Met lof en sang sijt nu <rhyme label="a" type="m" corresp="#s4:l1">bereyt</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Met frolicheyt, met <rhyme label="a" type="m" corresp="#s4:l1">eenicheyt</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Van nu tot in der <rhyme label="a" type="m" corresp="#s4:l1">eewicheyt</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Laet ons dat kindeken <rhyme label="b" type="f">singen</rhyme>.</l>
      </lg>
    </lg>
  </text>

    <melody>Maagd rein eerbaar van zeden</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">MAeght reyn, eerbaer van <rhyme label="a" type="f">seden</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Wilt ghy hooren na mijn <rhyme label="a" type="f" corresp="#s1:l1">reden</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Het sal u saligh zijn, dat 's <rhyme label="b" type="m">klaer</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Als ghy sult sijn <rhyme label="a" type="f" corresp="#s1:l1">over-leden</rhyme></l>
        <l id="s1:l5" met="4" type="+-">En begraven hier <rhyme label="a" type="f" corresp="#s1:l1">beneden</rhyme>:</l>
        <l id="s1:l6" met="4" type="+-">Daerom neemt den tijt <rhyme label="b" type="m" corresp="#s1:l3">wel-waer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Wilt my nu eens hooren <rhyme label="a" type="f">spreken</rhyme>:</l>
        <l id="s2:l2" met="4" type="+-">Van den wegh zijt ghy <rhyme label="a" type="f" corresp="#s2:l1">gheweken</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Wilt ghy de werelt volghen <rhyme label="b" type="m">naer</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Zy sal u met loose <rhyme label="a" type="f" corresp="#s2:l1">treken</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Brenghen tot seer veel <rhyme label="a" type="f" corresp="#s2:l1">ghebreken</rhyme>:</l>
        <l id="s2:l6" met="4" type="+-">Daerom neemt den tijt <rhyme label="b" type="m" corresp="#s2:l3">wel-waer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Volght dan liever Godt den <rhyme label="a" type="f">Heere</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Voeghende u naer Christus <rhyme label="a" type="f" corresp="#s3:l1">leere</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Want enghe is den wegh die <rhyme label="b" type="m">daer</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Leyde tot 's hemels prijs end' <rhyme label="a" type="f" corresp="#s3:l1">eere</rhyme>:</l>
        <l id="s3:l5" met="4" type="+-">Dus al sijdy jonck en <rhyme label="a" type="f" corresp="#s3:l1">teere</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Wilt den tijt wel nemen <rhyme label="b" type="m" corresp="#s3:l3">waer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Peyst doch op de leste <rhyme label="a" type="f">daghen</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Als Godt rekeningh sal <rhyme label="a" type="f" corresp="#s4:l1">vragen</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Daer 't sal worden <rhyme label="b" type="m">openbaer</rhyme>:</l>
        <l id="s4:l4" met="4" type="+-">Dan soo sullen sy 't <rhyme label="a" type="f" corresp="#s4:l1">beclaghen</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Die de sonden derren <rhyme label="a" type="f" corresp="#s4:l1">waghen</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Daerom neemt den tijt nu <rhyme label="b" type="m" corresp="#s4:l3">waer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">'t Bly <rhyme label="a" type="m">bazuingeschal</rhyme></l>
        <l id="s1:l2" met="3" type="+-">Blaaze <rhyme label="a" type="m" corresp="#s1:l1">overal</rhyme>,</l>
        <l id="s1:l3" met="3" type="+-">'t Vro'yk feest <rhyme label="b" type="m">geluid</rhyme>!</l>
        <l id="s1:l4" met="3" type="+-">'t Roep alomme <rhyme label="b" type="m" corresp="#s1:l3">uit</rhyme>:</l>
        <l id="s1:l5" met="3" type="+-">Zondaars! slaaven! <rhyme label="c" type="m">daar</rhyme> -</l>
        <l id="s1:l6" met="3" type="+-">Daar is 't <rhyme label="c" type="m" corresp="#s1:l5">vryheids-jaar</rhyme>!</l>
        <l id="s1:l7" met="3" type="+-">Keert nu, vry van <rhyme label="d" type="f">banden</rhyme>,</l>
        <l id="s1:l8" met="3" type="+-">Thuiswaards; - klapt de <rhyme label="d" type="f" corresp="#s1:l7">handen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Looft het Lam van <rhyme label="a" type="m">God</rhyme>!</l>
        <l id="s2:l2" met="3" type="+-">Hy schenkt u dit <rhyme label="a" type="m" corresp="#s2:l1">lot</rhyme>:</l>
        <l id="s2:l3" met="3" type="+-">Hy heeft ons <rhyme label="b" type="m">verzoend</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">Door zyn bloed <rhyme label="b" type="m" corresp="#s2:l3">verzoend</rhyme>!</l>
        <l id="s2:l5" met="3" type="+-">Maakt zyn weldaen <rhyme label="c" type="m">kond</rhyme>,</l>
        <l id="s2:l6" met="3" type="+-">Over 't <rhyme label="c" type="m" corresp="#s2:l5">Waereldrond</rhyme>;</l>
        <l id="s2:l7" met="3" type="+-">En keert, vry van <rhyme label="d" type="f">banden</rhyme>,</l>
        <l id="s2:l8" met="3" type="+-">Thuiswaards; - klapt de <rhyme label="d" type="f" corresp="#s2:l7">handen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Gy verkogt om <rhyme label="a" type="m">niet</rhyme>!</l>
        <l id="s3:l2" met="3" type="+-">'t Hemels erf; - om <rhyme label="a" type="m" corresp="#s3:l1">niet</rhyme></l>
        <l id="s3:l3" met="3" type="+-">Schenkt u Jesus 't <rhyme label="b" type="m">weêr</rhyme>;</l>
        <l id="s3:l4" met="3" type="+-">Geeft zyn liefde de <rhyme label="b" type="m" corresp="#s3:l3">eer</rhyme>!</l>
        <l id="s3:l5" met="3" type="+-">En paart mond en <rhyme label="c" type="m">snaar</rhyme>;</l>
        <l id="s3:l6" met="3" type="+-">Daar is 't <rhyme label="c" type="m" corresp="#s3:l5">vryheids-jaar</rhyme>!</l>
        <l id="s3:l7" met="3" type="+-">Keert nu, vry van <rhyme label="d" type="f">banden</rhyme>,</l>
        <l id="s3:l8" met="3" type="+-">Thuiswaards; - klapt de <rhyme label="d" type="f" corresp="#s3:l7">handen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">Slaaf van zond' en <rhyme label="a" type="m">hel</rhyme>!</l>
        <l id="s4:l2" met="3" type="+-">Zie! <rhyme label="a" type="m" corresp="#s4:l1">Immanuël</rhyme></l>
        <l id="s4:l3" met="3" type="+-">Schenkt u vryheid; - <rhyme label="b" type="m">woon</rhyme></l>
        <l id="s4:l4" met="3" type="+-">Veilig in Hem; - <rhyme label="b" type="m" corresp="#s4:l3">toon</rhyme></l>
        <l id="s4:l5" met="3" type="+-">Dat gy zalig <rhyme label="c" type="m">leeft</rhyme>;</l>
        <l id="s4:l6" met="3" type="+-">In Hem zalig <rhyme label="c" type="m" corresp="#s4:l5">leeft</rhyme>!</l>
        <l id="s4:l7" met="3" type="+-">Keer nu, vry van <rhyme label="d" type="f">banden</rhyme>,</l>
        <l id="s4:l8" met="3" type="+-">Thuiswaards; - klap de <rhyme label="d" type="f" corresp="#s4:l7">handen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="+-">Hoor het bly <rhyme label="a" type="m">geklank</rhyme>;</l>
        <l id="s5:l2" met="3" type="+-">Hoor met vreugd' en <rhyme label="a" type="m" corresp="#s5:l1">dank</rhyme>,</l>
        <l id="s5:l3" met="3" type="+-">De <rhyme label="b" type="m">Evangelie-maêr</rhyme>;</l>
        <l id="s5:l4" met="3" type="+-">Nader toe; zie <rhyme label="b" type="m" corresp="#s5:l3">daar</rhyme></l>
        <l id="s5:l5" met="3" type="+-">Jesus <rhyme label="c" type="m">aangezicht</rhyme>:</l>
        <l id="s5:l6" met="3" type="+-">Wandel in zyn <rhyme label="c" type="m" corresp="#s5:l5">licht</rhyme>,</l>
        <l id="s5:l7" met="3" type="+-">En keer vry van <rhyme label="d" type="f">banden</rhyme>,</l>
        <l id="s5:l8" met="3" type="+-">Thuiswaards; - klap; de <rhyme label="d" type="f" corresp="#s5:l7">handen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <author>Jacob Rosant</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">JEsus die <rhyme label="a" type="m">quam</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Met sijn <rhyme label="b" type="m">Discipulen</rhyme></l>
        <l id="s1:l3" met="2" type="-+"><rhyme label="a" type="m" corresp="#s1:l1">t'Bethza√Ødam</rhyme>.</l>
        <l id="s1:l4" met="3" type="-+">Als de <rhyme label="b" type="m" corresp="#s1:l2">Inwoonderen</rhyme></l>
        <l id="s1:l5" met="2" type="-+">Hebben <rhyme label="c" type="m">verstaen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Dat men hem daer nu <rhyme label="d" type="m">vindt</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Broghten sy <rhyme label="c" type="m" corresp="#s1:l5">aen</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Een mensche die was <rhyme label="d" type="m" corresp="#s1:l6">blindt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Wilt desen <rhyme label="a" type="m">man</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Sy baden met <rhyme label="b" type="m">ootmoedt</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Eens raken <rhyme label="a" type="m" corresp="#s2:l1">an</rhyme>.</l>
        <l id="s2:l4" met="3" type="-+">En Jesus met 'er <rhyme label="b" type="m" corresp="#s2:l2">spoedt</rhyme></l>
        <l id="s2:l5" met="2" type="-+">Nam hem by <rhyme label="c" type="m">d'hant</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">En leyd' hem af van <rhyme label="d" type="m">haer</rhyme>,</l>
        <l id="s2:l7" met="2" type="-+">Aen eenen <rhyme label="c" type="m" corresp="#s2:l5">kant</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Verscheyden van de <rhyme label="d" type="m" corresp="#s2:l6">Schaer</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Ende hy <rhyme label="a" type="m">spoogh</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Het speeksel uyt sijn <rhyme label="b" type="m">mondt</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Op sijne <rhyme label="a" type="m" corresp="#s3:l1">oogh</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Daer na op hem <rhyme label="b" type="m" corresp="#s3:l2">terstondt</rhyme></l>
        <l id="s3:l5" met="2" type="-+">Sijn handen <rhyme label="c" type="m">lagh</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En vraeghden, of hy <rhyme label="d" type="m">yet</rhyme></l>
        <l id="s3:l7" met="2" type="-+">Te deegen <rhyme label="c" type="m" corresp="#s3:l5">sagh</rhyme>?</l>
        <l id="s3:l8" met="3" type="-+">Terstont den Blinden <rhyme label="d" type="m" corresp="#s3:l6">siet</rhyme>,</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Ende hy <rhyme label="a" type="m">seyd'</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Ik wandelen <rhyme label="b" type="m">althans</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">Met kleyn <rhyme label="a" type="m" corresp="#s4:l1">bescheyd'</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Als boomen sie de <rhyme label="b" type="m" corresp="#s4:l2">mans</rhyme>.</l>
        <l id="s4:l5" met="2" type="-+">Hy sijn handt <rhyme label="c" type="m">weer</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Op sijne oogen <rhyme label="d" type="m">lagh</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">Na sijn <rhyme label="c" type="m" corresp="#s4:l5">begeer</rhyme></l>
        <l id="s4:l8" met="3" type="-+">De Blinden klaerlijk <rhyme label="d" type="m" corresp="#s4:l6">sagh</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Jesus hem <rhyme label="a" type="m">laet</rhyme></l>
        <l id="s5:l2" met="3" type="-+">'t Huys gaen, en hem <rhyme label="b" type="m">gebiet</rhyme>,</l>
        <l id="s5:l3" met="2" type="-+">Als g' in Stee' <rhyme label="a" type="m" corresp="#s5:l1">gaet</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">En seght de lieden <rhyme label="b" type="m" corresp="#s5:l2">niet</rhyme>.</l>
        <l id="s5:l5" met="2" type="-+">O Heer, <rhyme label="c" type="m">verlicht</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Ons Blinden <rhyme label="d" type="m">allegaer</rhyme>,</l>
        <l id="s5:l7" met="2" type="-+">Wilt het <rhyme label="c" type="m" corresp="#s5:l5">gesicht</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Der sielen maken <rhyme label="d" type="m" corresp="#s5:l6">klaer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

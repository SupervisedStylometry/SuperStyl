  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">LEnten doet de Aerd’ <rhyme label="a" type="f">ontluycken</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Die de coude VVinter <rhyme label="b" type="m">sluyt</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Levert bloemen die soet <rhyme label="a" type="f" corresp="#s1:l1">ruycken</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Deckt de Aerd’ met gras en <rhyme label="b" type="m" corresp="#s1:l2">cruyt</rhyme>;</l>
        <l id="s1:l5" met="4" type="+-">’Tvogheltje singht <rhyme label="b" type="m" corresp="#s1:l2">overluyt</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Maeckt sijn nestje in de <rhyme label="c" type="m">vvay</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Of aen tacken van het <rhyme label="d" type="m">vvoudt</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Daer het hem met vreucht <rhyme label="d" type="m" corresp="#s1:l7">onthoudt</rhyme></l>
        <l id="s1:l9" met="4" type="+-">Om in vreen te broen sijn <rhyme label="c" type="m" corresp="#s1:l6">ey</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Maer de VVinter comt op’t <rhyme label="a" type="f">leste</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Vinnigh met haer nieuvve <rhyme label="b" type="m">Iaer</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">En gheeft anders niet ten <rhyme label="a" type="f" corresp="#s2:l1">besten</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Dan koudt, haghel, vvinden <rhyme label="b" type="m" corresp="#s2:l2">swaer</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Dat vvordt d’arme mensch <rhyme label="b" type="m" corresp="#s2:l2">ghevvaer</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Die niet vvel sit in de <rhyme label="c" type="m">vvol</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Noch versien van spijs en <rhyme label="d" type="m">dranck</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Als vvy zijn, dies Godt sy <rhyme label="d" type="m" corresp="#s2:l7">danck</rhyme>,</l>
        <l id="s2:l9" met="4" type="+-">Die ons gheeft de schueren <rhyme label="c" type="m" corresp="#s2:l6">vol</rhyme>.</l>
      </lg>
    </lg>
  </text>

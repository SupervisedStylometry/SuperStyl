  <author>Bernardus Busschoff</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">D'Achtste Sonn' was <rhyme label="a" type="f">op-geresen</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Na die heylsame <rhyme label="b" type="m">Geboort'</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Diergelijck niet is <rhyme label="b" type="m" corresp="#s1:l2">gehoort</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Diergelijcke noyt sal <rhyme label="a" type="f" corresp="#s1:l1">wesen</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Van dien wonderlijcken <rhyme label="c" type="m">Soon</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Godt en Mensch in een <rhyme label="c" type="m" corresp="#s1:l5">Persoon</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Joseph en Maria 't <rhyme label="a" type="f">samen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Dachten aen die strenge <rhyme label="b" type="m">Wet</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Die de Heer had <rhyme label="b" type="m" corresp="#s2:l2">ingeset</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Die sy soo ter herten <rhyme label="a" type="f" corresp="#s2:l1">namen</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Dat het Kindt besneden <rhyme label="c" type="m">wierdt</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Meer als and're niet <rhyme label="c" type="m" corresp="#s2:l5">gevierdt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">In 't besnijden sagh men <rhyme label="a" type="f">springen</rhyme></l>
        <l id="s3:l2" met="4" type="+-">d' Eerste mael die bloedt <rhyme label="b" type="m">Fonteyn</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Die ons maeckt van sonden <rhyme label="b" type="m" corresp="#s3:l2">reyn</rhyme>:</l>
        <l id="s3:l4" met="4" type="+-">Maer wat wonderlijcke <rhyme label="a" type="f" corresp="#s3:l1">dingen</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Datmen dit onnoosel <rhyme label="c" type="m">Kindt</rhyme></l>
        <l id="s3:l6" met="4" type="+-">In besnijdens smerte <rhyme label="c" type="m" corresp="#s3:l5">vindt</rhyme>!</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Immers kende hy geen <rhyme label="a" type="f">sonde</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Heyligh hy ter Wereldt <rhyme label="b" type="m">quam</rhyme>:</l>
        <l id="s4:l3" met="4" type="+-">Waerom geeftmen 't suyver <rhyme label="b" type="m" corresp="#s4:l2">lam</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Dan soo pijnelijcke <rhyme label="a" type="f" corresp="#s4:l1">wonde</rhyme>?</l>
        <l id="s4:l5" met="4" type="+-">O die smertelijcke <rhyme label="c" type="m">snee</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Deed' sijn teere hert wel <rhyme label="c" type="m" corresp="#s4:l5">wee</rhyme>!</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Gaet o Mensch! hier niet te <rhyme label="a" type="f">rade</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Met u vleeschelijck <rhyme label="b" type="m">vernuft</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">'t Welck in sulcke saecken <rhyme label="b" type="m" corresp="#s5:l2">suft</rhyme>;</l>
        <l id="s5:l4" met="4" type="+-">Siet om hoogh, en slaet wel <rhyme label="a" type="f" corresp="#s5:l1">gade</rhyme></l>
        <l id="s5:l5" met="4" type="+-">Godes will' en wijsen <rhyme label="c" type="m">raet</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Die u te aenbidden <rhyme label="c" type="m" corresp="#s5:l5">staet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">In 't besnijden is <rhyme label="a" type="f">gebleecken</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">'t Geen gy vast gelooven <rhyme label="b" type="m">moet</rhyme>.</l>
        <l id="s6:l3" met="4" type="+-">Dat de Heer hadt Menschen <rhyme label="b" type="m" corresp="#s6:l2">bloedt</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">En 't besnijden was een <rhyme label="a" type="f" corresp="#s6:l1">teecken</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Dat hy was uyt d' oude <rhyme label="c" type="m">stam</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Van sijn Vader <rhyme label="c" type="m" corresp="#s6:l5">Abraham</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Dit verseeren en <rhyme label="a" type="f">verwonden</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Leedt de Heere met <rhyme label="b" type="m">gedult</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Heeft daer in de Wet <rhyme label="b" type="m" corresp="#s7:l2">vervult</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">En hem selven vast <rhyme label="a" type="f" corresp="#s7:l1">verbonden</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Voorts in als genoegh te <rhyme label="c" type="m">doen</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Om te maecken ons <rhyme label="c" type="m" corresp="#s7:l5">Rantsoen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Houdt o Mensch! u hier mee <rhyme label="a" type="f">stille</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Steldt uw' weet-sucht maet en <rhyme label="b" type="m">perck</rhyme>;</l>
        <l id="s8:l3" met="4" type="+-">Weet dan noch, dat oock dit <rhyme label="b" type="m" corresp="#s8:l2">werck</rhyme></l>
        <l id="s8:l4" met="4" type="+-">Is geschiet om uwen 't <rhyme label="a" type="f" corresp="#s8:l1">wille</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Elck bloedt-druppel die hier <rhyme label="c" type="m">viel</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Is tot voordeel van uw' <rhyme label="c" type="m" corresp="#s8:l5">ziel</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Heer die voor ons zijt <rhyme label="a" type="f">besneden</rhyme></l>
        <l id="s9:l2" met="4" type="+-">Aen uw' vleesch met 't scherpe <rhyme label="b" type="m">stael</rhyme>;</l>
        <l id="s9:l3" met="4" type="+-">Och besnijdt ons <rhyme label="b" type="m" corresp="#s9:l2">altemael</rhyme></l>
        <l id="s9:l4" met="4" type="+-">Soo aen 't hert en all' ons' <rhyme label="a" type="f" corresp="#s9:l1">leden</rhyme>,</l>
        <l id="s9:l5" met="4" type="+-">Datter noch aen ziel noch <rhyme label="c" type="m">lijf</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">Voor-huydt van de sonde <rhyme label="c" type="m" corresp="#s9:l5">blijf</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

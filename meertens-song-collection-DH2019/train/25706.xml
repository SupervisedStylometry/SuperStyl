  <author>Leenaert Clock</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Tot my neyght uwe <rhyme label="a" type="f">ooren</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Ick sal u doen <rhyme label="b" type="m">verstaen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Hoe Broeders (naer <rhyme label="a" type="f" corresp="#s1:l1">t’behooren</rhyme>)</l>
        <l id="s1:l4" met="3" type="-+">Moeten in deucht <rhyme label="b" type="m" corresp="#s1:l2">voorgaen</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Die Christum nu hebben <rhyme label="b" type="m" corresp="#s1:l2">aenghedaen</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Vereenicht hiel // met lijf en <rhyme label="c" type="m">ziel</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Naer t’Goddelijck <rhyme label="b" type="m" corresp="#s1:l2">vermaen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Als hem selven <rhyme label="a" type="f">beminnen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Sal hy den Naesten <rhyme label="b" type="m">vroet</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">En sal in sijn <rhyme label="a" type="f" corresp="#s2:l1">versinnen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Den Broeder alleen <rhyme label="b" type="m" corresp="#s2:l2">goet</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Hier doen met eenen soo blijden <rhyme label="b" type="m" corresp="#s2:l2">moet</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Met woordt noch daet // bewijsen <rhyme label="c" type="m">quaet</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Naer’t wesen Christi <rhyme label="b" type="m" corresp="#s2:l2">soet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Natuere moet hier <rhyme label="a" type="f">blijcken</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Soo de Schriftuer <rhyme label="b" type="m">vermelt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Elck Dier lieft sijns <rhyme label="a" type="f" corresp="#s3:l1">ghelijcken</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En hem daer met <rhyme label="b" type="m" corresp="#s3:l2">verselt</rhyme>:</l>
        <l id="s3:l5" met="4" type="-+">Wie Godt lief te hebben hier <rhyme label="b" type="m" corresp="#s3:l2">vertelt</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">En met der daedt // den Broeder <rhyme label="c" type="m">haet</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Met leughens hy hem <rhyme label="b" type="m" corresp="#s3:l2">quelt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Noch brengt oock hier <rhyme label="a" type="f">beneven</rhyme></l>
        <l id="s4:l2" met="3" type="-+">De eenicheyt dit <rhyme label="b" type="m">me</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Dat sy gheern gaet <rhyme label="a" type="f" corresp="#s4:l1">vergheven</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Den Broeder t’elcker <rhyme label="b" type="m" corresp="#s4:l2">ste</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Ghelijck als oock soo Stephanus <rhyme label="b" type="m" corresp="#s4:l2">de</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Soo men hier sneeft // sy gheern <rhyme label="c" type="m">vergheeft</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Soeckt soo te houden <rhyme label="b" type="m" corresp="#s4:l2">vre</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">En als sy (om <rhyme label="a" type="f">t’ontsincken</rhyme>)</l>
        <l id="s5:l2" met="3" type="-+">Comt te offeren <rhyme label="b" type="m">daer</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">En sy daer wordt <rhyme label="a" type="f" corresp="#s5:l1">ghedincken</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Dat haer Broeder <rhyme label="b" type="m" corresp="#s5:l2">voorwaer</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Oock yet soude hebben teghen <rhyme label="b" type="m" corresp="#s5:l2">haer</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Den offer laet // sy, daer hy <rhyme label="c" type="m">staet</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Gaet hem versoenen <rhyme label="b" type="m" corresp="#s5:l2">claer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Kent datse moet <rhyme label="a" type="f">verdraghen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Des Broeders <rhyme label="b" type="m">bloedicheyt</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Seven-mael alle <rhyme label="a" type="f" corresp="#s6:l1">daghen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Is sy met lust <rhyme label="b" type="m" corresp="#s6:l2">bereyt</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Die zonde teghens haer, en het <rhyme label="b" type="m" corresp="#s6:l2">leyt</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Om schelden quijt // tot aller <rhyme label="c" type="m">tijdt</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Soo de Schriftuere <rhyme label="b" type="m" corresp="#s6:l2">seyt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">En broeders in den <rhyme label="a" type="f">Heere</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Stichten elckanderen <rhyme label="b" type="m">voort</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Met Gods heylsame <rhyme label="a" type="f" corresp="#s7:l1">leere</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Sy spreken van Gods <rhyme label="b" type="m" corresp="#s7:l2">woort</rhyme></l>
        <l id="s7:l5" met="4" type="-+">Met daedt en schijn (soo dat <rhyme label="b" type="m" corresp="#s7:l2">behoort</rhyme>)</l>
        <l id="s7:l6" met="4" type="-+">Haer lust en vreucht // en haer <rhyme label="c" type="m">gheneucht</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Staet daer in u <rhyme label="b" type="m" corresp="#s7:l2">onghestoort</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Haet en sal daer niet <rhyme label="a" type="f">wesen</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Maer oft sy zond’ <rhyme label="b" type="m">bevondt</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Soo straft sy met Gods <rhyme label="a" type="f" corresp="#s8:l1">vresen</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Den Broeder t’elcker <rhyme label="b" type="m" corresp="#s8:l2">stondt</rhyme>:</l>
        <l id="s8:l5" met="4" type="-+">Op dats’ ock sijne schulden <rhyme label="b" type="m" corresp="#s8:l2">rondt</rhyme></l>
        <l id="s8:l6" met="4" type="-+">Niet draghen moest // gheheel <rhyme label="c" type="m">verwoest</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Soo maecktse hem <rhyme label="b" type="m" corresp="#s8:l2">ghesont</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Eer sy den splinter <rhyme label="a" type="f">cleyne</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Wil uyttrecken <rhyme label="b" type="m">correckt</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Maeckt sy haer ooghe <rhyme label="a" type="f" corresp="#s9:l1">reyne</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Van t’ghen’ dat haer <rhyme label="b" type="m" corresp="#s9:l2">bevleckt</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Den balck sy te vooren snel uyt <rhyme label="b" type="m" corresp="#s9:l2">treckt</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Op dat sy van // seer wel sien <rhyme label="c" type="m">can</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Den Broeder maeck <rhyme label="b" type="m" corresp="#s9:l2">perfeckt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Neerstelijck sonder <rhyme label="a" type="f">schromen</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Is sy voor liefde <rhyme label="b" type="m">brandt</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Sy doet te helpen <rhyme label="a" type="f" corresp="#s10:l1">comen</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Den naesten, met <rhyme label="b" type="m" corresp="#s10:l2">bystandt</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Set by hem op haer goet end’ <rhyme label="b" type="m" corresp="#s10:l2">pandt</rhyme></l>
        <l id="s10:l6" met="4" type="-+">In sijnen noot // uyt liefde <rhyme label="c" type="m">groot</rhyme></l>
        <l id="s10:l7" met="3" type="-+">Biedt hy hem soo de <rhyme label="b" type="m" corresp="#s10:l2">handt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Recht naer Ioannes <rhyme label="a" type="f">schrijven</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Haer het en sluyt sy <rhyme label="b" type="m">niet</rhyme></l>
        <l id="s11:l3" met="3" type="-+">Int jammerlijck <rhyme label="a" type="f" corresp="#s11:l1">bedrijven</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Haers Broeders, alst <rhyme label="b" type="m" corresp="#s11:l2">gheschiedt</rhyme>:</l>
        <l id="s11:l5" met="4" type="-+">Hoe soude Gods liefde in haer, <rhyme label="b" type="m" corresp="#s11:l2">siet</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">Blijven soo puer // teghen <rhyme label="c" type="m">natuer</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">Waer dit // vaet mijn <rhyme label="b" type="m" corresp="#s11:l2">bediet</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Iaghen sal hy oock <rhyme label="a" type="f">mede</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Soo David heeft <rhyme label="b" type="m">gheleert</rhyme></l>
        <l id="s12:l3" met="3" type="-+">Ghestadich nae den <rhyme label="a" type="f" corresp="#s12:l1">vrede</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Mijden den twist <rhyme label="b" type="m" corresp="#s12:l2">onweert</rhyme>,</l>
        <l id="s12:l5" met="4" type="-+">D’accoort der leden sy hier <rhyme label="b" type="m" corresp="#s12:l2">begeert</rhyme>,</l>
        <l id="s12:l6" met="4" type="-+">Met Loth slijt sy // twist en <rhyme label="c" type="m">party</rhyme>,</l>
        <l id="s12:l7" met="3" type="-+">Sy Zuydt oft Westwaerts <rhyme label="b" type="m" corresp="#s12:l2">keert</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Christen Broeders te <rhyme label="a" type="f">samen</rhyme></l>
        <l id="s13:l2" met="3" type="-+">Laet ons dus zijn <rhyme label="b" type="m">ghesint</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Elck proef sijn werck met <rhyme label="a" type="f" corresp="#s13:l1">namen</rhyme></l>
        <l id="s13:l4" met="3" type="-+">Of hy’t oock soo <rhyme label="b" type="m" corresp="#s13:l2">bevindt</rhyme>,</l>
        <l id="s13:l5" met="4" type="-+">En ghenatuert is, als Gods lief <rhyme label="b" type="m" corresp="#s13:l2">kindt</rhyme>,</l>
        <l id="s13:l6" met="4" type="-+">Ontbreeckter wat, verbetert <rhyme label="c" type="m">dat</rhyme>,</l>
        <l id="s13:l7" met="3" type="-+">Slaet het niet in den <rhyme label="b" type="m" corresp="#s13:l2">windt</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Kinders laet ons dat <rhyme label="a" type="f">soecken</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Hier in dit aerdtsche <rhyme label="b" type="m">dal</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Op dat wy met den <rhyme label="a" type="f" corresp="#s14:l1">cloecken</rhyme></l>
        <l id="s14:l4" met="3" type="-+">En by het lief <rhyme label="b" type="m" corresp="#s14:l2">ghetal</rhyme></l>
        <l id="s14:l5" met="4" type="-+">D’welck het eeuwich Rijck besitten <rhyme label="b" type="m" corresp="#s14:l2">sal</rhyme>,</l>
        <l id="s14:l6" met="4" type="-+">D’erffenis schoon // tot eenen <rhyme label="c" type="m">loon</rhyme></l>
        <l id="s14:l7" met="3" type="-+">Moghen vercrijghen <rhyme label="b" type="m" corresp="#s14:l2">al</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Seer ootmoedich wy <rhyme label="a" type="f">deden</rhyme>,</l>
        <l id="s15:l2" met="3" type="-+">Lief Heere, gheeft ons  <rhyme label="b" type="m">cracht</rhyme>,</l>
        <l id="s15:l3" met="3" type="-+">Stiert doch hier toe ons <rhyme label="a" type="f" corresp="#s15:l1">leden</rhyme></l>
        <l id="s15:l4" met="3" type="-+">Door uwes Gheestes <rhyme label="b" type="m" corresp="#s15:l2">macht</rhyme>,</l>
        <l id="s15:l5" met="4" type="-+">Dat bidden wy u, Heere, met <rhyme label="b" type="m" corresp="#s15:l2">aendacht</rhyme>,</l>
        <l id="s15:l6" met="4" type="-+">V rechte handt // seer <rhyme label="c" type="m">triumphant</rhyme></l>
        <l id="s15:l7" met="3" type="-+">Leyd’ ons soo dach en <rhyme label="b" type="m" corresp="#s15:l2">nacht</rhyme>,</l>
      </lg>
    </lg>
  </text>
</song>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">BEhoudt ons, Heere, by Uw <rhyme label="a" type="m">Woord</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">En weere der vyanden <rhyme label="a" type="m" corresp="#s1:l1">moord</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Die Jesum Christum Uwen <rhyme label="b" type="m">Soon</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Verstooten poogen van Sijn <rhyme label="b" type="m" corresp="#s1:l3">Throon</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Betoon Uw macht, let op Uw <rhyme label="a" type="m">eer</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Dat Gy zyt aller Heeren <rhyme label="a" type="m" corresp="#s2:l1">Heer</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Bescherm Uw arme <rhyme label="b" type="m">Christenheid</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Dat sy altyd Uw lof <rhyme label="b" type="m" corresp="#s2:l3">verbreid</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Gy waerde Troost Uw volk stae <rhyme label="a" type="m">by</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Dat eendracht in Uw poorten <rhyme label="a" type="m" corresp="#s3:l1">zy</rhyme>;</l>
        <l id="s3:l3" met="4" type="-+">Verlaet ons niet ter laetster <rhyme label="b" type="m">nood</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">En zyt ons leidsman in der <rhyme label="b" type="m" corresp="#s3:l3">dood</rhyme>.</l>
      </lg>
    </lg>
  </text>

    <melody>Ga wereld met uw ijdelheid</melody>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">WAcht u van de wereldt <rhyme label="a" type="m">wel</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Al haer streelen is maer <rhyme label="a" type="m" corresp="#s1:l1">spel</rhyme>:</l>
        <l id="s1:l3" met="4" type="+-">Godt alleen is t'eenigh <rhyme label="b" type="m">goedt</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Waer op dat gy steunen <rhyme label="b" type="m" corresp="#s1:l3">moet</rhyme>:</l>
        <l id="s1:l5" met="2" type="+-">Boven <rhyme label="c" type="m">al</rhyme></l>
        <l id="s1:l6" met="2" type="+-">Hy u <rhyme label="c" type="m" corresp="#s1:l5">sal</rhyme></l>
        <l id="s1:l7" met="4" type="+-">Helpen in dit aerdtsche <rhyme label="c" type="m" corresp="#s1:l5">dal</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Die volght s'wereldts lusten <rhyme label="a" type="m">naer</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Wordt te laet haer list <rhyme label="a" type="m" corresp="#s2:l1">gewaer</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Als sy hem tot eeuwig' <rhyme label="b" type="m">pyn</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Doet in diepen af grondt <rhyme label="b" type="m" corresp="#s2:l3">syn</rhyme>,</l>
        <l id="s2:l5" met="2" type="+-">En hem <rhyme label="c" type="m">smyt</rhyme></l>
        <l id="s2:l6" met="2" type="+-">Voor <rhyme label="c" type="m" corresp="#s2:l5">altydt</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Daer hy alle smerten <rhyme label="c" type="m" corresp="#s2:l5">lydt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">In de deught is t'waere <rhyme label="a" type="m">licht</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">In de wereldt droef <rhyme label="a" type="m" corresp="#s3:l1">gesicht</rhyme>:</l>
        <l id="s3:l3" met="4" type="+-">Uyt de wereldt komt den <rhyme label="b" type="m">nacht</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Vol van eeuwigh spyt en <rhyme label="b" type="m" corresp="#s3:l3">klacht</rhyme>:</l>
        <l id="s3:l5" met="2" type="+-">Maer de <rhyme label="c" type="m">deught</rhyme>,</l>
        <l id="s3:l6" met="2" type="+-">Jonge <rhyme label="c" type="m" corresp="#s3:l5">jeught</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Leydt u naer des Hemels <rhyme label="c" type="m" corresp="#s3:l5">vreught</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Maekt, dat gy het beste <rhyme label="a" type="m">kiest</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Noch oyt uw geluck <rhyme label="a" type="m" corresp="#s4:l1">verliest</rhyme>:</l>
        <l id="s4:l3" met="4" type="+-">Peyst dat Godts <rhyme label="b" type="m">bermhertigheydt</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Keert oock in <rhyme label="b" type="m" corresp="#s4:l3">rechtveerdigheydt</rhyme>.</l>
        <l id="s4:l5" met="2" type="+-">Hy <rhyme label="c" type="m">bemindt</rhyme></l>
        <l id="s4:l6" met="2" type="+-">U, syn <rhyme label="c" type="m" corresp="#s4:l5">kindt</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Maer het quaedt oock vraeke <rhyme label="c" type="m" corresp="#s4:l5">vindt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

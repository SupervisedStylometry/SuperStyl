  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Droge vryers, koel van <rhyme label="a" type="f">sinnen</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Gants ontaard van 't soete <rhyme label="a" type="f" corresp="#s1:l1">minnen</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">Wat drijft u <rhyme label="b" type="m">aan</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Die drift te <rhyme label="b" type="m" corresp="#s1:l3">wederstaan</rhyme>,</l>
        <l id="s1:l5" met="1" type="-+">Wiens <rhyme label="c" type="m">gloed</rhyme></l>
        <l id="s1:l6" met="1" type="-+">Vol <rhyme label="c" type="m" corresp="#s1:l5">soet</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Het hert vernoegd doet <rhyme label="d" type="f">leven</rhyme>;</l>
        <l id="s1:l8" met="2" type="+-">Ja, <rhyme label="e" type="m">verheugd</rhyme></l>
        <l id="s1:l9" met="2" type="+-">Met veel <rhyme label="e" type="m" corresp="#s1:l8">vreugd</rhyme>,</l>
        <l id="s1:l10" met="4" type="+-">Al wie na haar soetheyd <rhyme label="d" type="f" corresp="#s1:l7">streven</rhyme>;</l>
        <l id="s1:l11" met="2" type="+-">Ja, wiens <rhyme label="f" type="m">kragt</rhyme></l>
        <l id="s1:l12" met="2" type="+-">Eerd en <rhyme label="f" type="m" corresp="#s1:l11">agt</rhyme></l>
        <l id="s1:l13" met="4" type="+-">'t Gantsche menschelijk <rhyme label="f" type="m" corresp="#s1:l11">geslagt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Wat vermaak kan u <rhyme label="a" type="f">beloven</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Dus onagtsaam uyt te <rhyme label="a" type="f" corresp="#s2:l1">doven</rhyme></l>
        <l id="s2:l3" met="2" type="-+">Dat innig <rhyme label="b" type="m">vuur</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Wel eer door vrouw <rhyme label="b" type="m" corresp="#s2:l3">natuur</rhyme></l>
        <l id="s2:l5" met="1" type="-+">De <rhyme label="c" type="m">Jeugd</rhyme></l>
        <l id="s2:l6" met="1" type="-+">Tot <rhyme label="c" type="m" corresp="#s2:l5">vreugd</rhyme></l>
        <l id="s2:l7" met="3" type="-+">En nut gebruyk   <rhyme label="d" type="f">gegeven</rhyme>!</l>
        <l id="s2:l8" met="2" type="+-">Laat dan <rhyme label="e" type="m">af</rhyme></l>
        <l id="s2:l9" met="2" type="+-">Van dus <rhyme label="e" type="m" corresp="#s2:l8">laf</rhyme></l>
        <l id="s2:l10" met="4" type="+-">Hare wil te <rhyme label="d" type="f" corresp="#s2:l7">wederstreven</rhyme></l>
        <l id="s2:l11" met="2" type="+-">En <rhyme label="f" type="m">verlaat</rhyme></l>
        <l id="s2:l12" met="2" type="+-">Alle <rhyme label="f" type="m" corresp="#s2:l11">raad</rhyme></l>
        <l id="s2:l13" met="4" type="+-">Die u hier in tegen <rhyme label="f" type="m" corresp="#s2:l11">gaat</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Dan sult gy dat soet <rhyme label="a" type="f">ontfangen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Dat met vuriglijk <rhyme label="a" type="f" corresp="#s3:l1">verlangen</rhyme></l>
        <l id="s3:l3" met="2" type="-+">Van   al wat <rhyme label="b" type="m">leeft</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Werd hevig na <rhyme label="b" type="m" corresp="#s3:l3">gestreefd</rhyme>;</l>
        <l id="s3:l5" met="1" type="-+">Welks <rhyme label="c" type="m">smaak</rhyme></l>
        <l id="s3:l6" met="1" type="-+">
          <rhyme label="c" type="m" corresp="#s3:l5">Vermaak</rhyme>
        </l>
        <l id="s3:l7" met="3" type="-+">Uw steeds sal <rhyme label="d" type="f">mededelen</rhyme>.</l>
        <l id="s3:l8" met="2" type="+-">Ja, die <rhyme label="e" type="m">gloed</rhyme></l>
        <l id="s3:l9" met="2" type="+-">Soo vol <rhyme label="e" type="m" corresp="#s3:l8">soet</rhyme></l>
        <l id="s3:l10" met="4" type="+-">Sal voortaan u sinnen <rhyme label="d" type="f" corresp="#s3:l7">streelen</rhyme>,</l>
        <l id="s3:l11" met="2" type="+-">Want geen <rhyme label="f" type="m">vreugd</rhyme></l>
        <l id="s3:l12" met="2" type="+-">Heeft de <rhyme label="f" type="m" corresp="#s3:l11">Jeugd</rhyme></l>
        <l id="s3:l13" met="4" type="+-">Zoo kragtdadig oit <rhyme label="f" type="m" corresp="#s3:l11">verheugd</rhyme>.</l>
      </lg>
    </lg>
  </text>

    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Hendrik Uilenbroek</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Wanneer Godt den mensch <rhyme label="a" type="f">formeerde</rhyme>,</l>
        <l id="s1:l2" met="2" type="+-">En <rhyme label="a" type="f" corresp="#s1:l1">vereerde</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Met zijn eygen heerlijk <rhyme label="b" type="m">Beeldt</rhyme>.</l>
        <l id="s1:l4" met="4" type="+-">Was hem heerschappy <rhyme label="c" type="f">gegeven</rhyme>.</l>
        <l id="s1:l5" met="2" type="+-">Hy <rhyme label="c" type="f" corresp="#s1:l4">verheven</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Boven ’t geen de aerde <rhyme label="b" type="m" corresp="#s1:l3">teelt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Al wat leeft onder den <rhyme label="a" type="f">Hemel</rhyme>,</l>
        <l id="s2:l2" met="2" type="+-">Al ’t <rhyme label="a" type="f" corresp="#s2:l1">gewemel</rhyme>.</l>
        <l id="s2:l3" met="4" type="+-">Op de aerd’ of in de <rhyme label="b" type="m">zee</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Liet zich door zijn handt <rhyme label="c" type="f">Regeeren</rhyme>,</l>
        <l id="s2:l5" met="2" type="+-">Aan zijn <rhyme label="c" type="f" corresp="#s2:l4">Heere</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Elk van haar zijn plicht <rhyme label="b" type="m" corresp="#s2:l3">voldee</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Maar de mensch van Godt <rhyme label="a" type="f">geweeken</rhyme></l>
        <l id="s3:l2" met="2" type="+-">Tot <rhyme label="a" type="f" corresp="#s3:l1">gebreeken</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Door moetwil en <rhyme label="b" type="m">hovaerdy</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Die naa Zatans Raadt wou <rhyme label="c" type="f">hooren</rhyme></l>
        <l id="s3:l5" met="2" type="+-">Heeft <rhyme label="c" type="f" corresp="#s3:l4">verlooren</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Zijne macht, en <rhyme label="b" type="m" corresp="#s3:l3">heerschappy</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Veele hebben haar <rhyme label="a" type="f">ontslagen</rhyme></l>
        <l id="s4:l2" met="2" type="+-">Van te <rhyme label="a" type="f" corresp="#s4:l1">dragen</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">’t Iok van <rhyme label="b" type="m">Onderdanigheyt</rhyme>.</l>
        <l id="s4:l4" met="4" type="+-">Zy ontvluchten, en zy <rhyme label="c" type="f">poogen</rhyme></l>
        <l id="s4:l5" met="2" type="+-">’t Naa <rhyme label="c" type="f" corresp="#s4:l4">vermoogen</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Weër te staan, met <rhyme label="b" type="m" corresp="#s4:l3">wrevelheyt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Doch de Heere zeer <rhyme label="a" type="f">lankmoedig</rhyme></l>
        <l id="s5:l2" met="2" type="+-">En zoo <rhyme label="a" type="f" corresp="#s5:l1">goedig</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Die ons in genaë <rhyme label="b" type="m">ontfing</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Heeft ons in zijn Zoon <rhyme label="c" type="f">gegeven</rhyme></l>
        <l id="s5:l5" met="2" type="+-">’t Eeuwig <rhyme label="c" type="f" corresp="#s5:l4">leven</rhyme></l>
        <l id="s5:l6" met="4" type="+-">En ook recht tot alle <rhyme label="b" type="m" corresp="#s5:l3">ding</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Al wat Lucht, Aerd’ <rhyme label="a" type="f">Water-vloeden</rhyme>,</l>
        <l id="s6:l2" met="2" type="+-">Teelen <rhyme label="a" type="f" corresp="#s6:l1">voeden</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Al die Schepsels naa haar <rhyme label="b" type="m">aert</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Geeft Godt tot gebruik des <rhyme label="c" type="f">menschen</rhyme>,</l>
        <l id="s6:l5" met="2" type="+-">Naa ons <rhyme label="c" type="f" corresp="#s6:l4">wenschen</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Uit zijn gunst, wy zijn ’t niet <rhyme label="b" type="m" corresp="#s6:l3">waerdt</rhyme>!</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Ziet op Bergen, Bosschen, <rhyme label="a" type="f">Daalen</rhyme>,</l>
        <l id="s7:l2" met="2" type="+-">Achter <rhyme label="a" type="f" corresp="#s7:l1">haalen</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Door de Honden, niet <rhyme label="b" type="m">gestilt</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">(Afgericht tot loopen <rhyme label="c" type="f">Iaagen</rhyme>)</l>
        <l id="s7:l5" met="2" type="+-">Eer zy <rhyme label="c" type="f" corresp="#s7:l4">draagen</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Tot haar Heer, ’t gevangen <rhyme label="b" type="m" corresp="#s7:l3">Wildt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Netten Strikken op <rhyme label="a" type="f">gehangen</rhyme>,</l>
        <l id="s8:l2" met="2" type="+-">Om te <rhyme label="a" type="f" corresp="#s8:l1">vangen</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">’t Geen in ‘t Veldt of Bosschen <rhyme label="b" type="m">zwiert</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Zijn verborgen voor de <rhyme label="c" type="f">oogen</rhyme>,</l>
        <l id="s8:l5" met="2" type="+-">Zoo <rhyme label="c" type="f" corresp="#s8:l4">bedroogen</rhyme>;</l>
        <l id="s8:l6" met="4" type="+-">Vangt de mensch het vlug <rhyme label="b" type="m" corresp="#s8:l3">gediert</rhyme>!</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Visschen die in ’t water <rhyme label="a" type="f">leven</rhyme>,</l>
        <l id="s9:l2" met="2" type="+-">Zwemmen <rhyme label="a" type="f" corresp="#s9:l1">zweeven</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Worden door het Aas <rhyme label="b" type="m">verleit</rhyme>.</l>
        <l id="s9:l4" met="4" type="+-">Of in Fuik en Net <rhyme label="c" type="f">geschooten</rhyme></l>
        <l id="s9:l5" met="2" type="+-">Vast <rhyme label="c" type="f" corresp="#s9:l4">beslooten</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">Werden tot den Dis <rhyme label="b" type="m" corresp="#s9:l3">bereidt</rhyme></l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Laat ons zonder te <rhyme label="a" type="f">vertraagen</rhyme></l>
        <l id="s10:l2" met="2" type="+-">Loopen <rhyme label="a" type="f" corresp="#s10:l1">Iaagen</rhyme>!</l>
        <l id="s10:l3" met="4" type="+-">Naar de Vreë en <rhyme label="b" type="m">Heiligheit</rhyme>;</l>
        <l id="s10:l4" met="4" type="+-">Ziel! wilt op uw paden <rhyme label="c" type="f">letten</rhyme>,</l>
        <l id="s10:l5" met="2" type="+-">Strikken <rhyme label="c" type="f" corresp="#s10:l4">Netten</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">Zijnder in den weg <rhyme label="b" type="m" corresp="#s10:l3">heleidt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Iezus gaat Gods <rhyme label="a" type="f">Koninkrijke</rhyme>,</l>
        <l id="s11:l2" met="2" type="+-">
          <rhyme label="a" type="f" corresp="#s11:l1">Vergelijken</rhyme>
        </l>
        <l id="s11:l3" met="4" type="+-">By een Net, daar goet en <rhyme label="b" type="m">quaat</rhyme>,</l>
        <l id="s11:l4" met="4" type="+-">Zaamen werdt by een <rhyme label="c" type="f">getoogen</rhyme>,</l>
        <l id="s11:l5" met="2" type="+-">’t Dient <rhyme label="c" type="f" corresp="#s11:l4">gewoogen</rhyme>,</l>
        <l id="s11:l6" met="4" type="+-">O mijn Ziel! hoe ’t met u <rhyme label="b" type="m" corresp="#s11:l3">staat</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Die Gods Rijke naa wil <rhyme label="a" type="f">trachten</rhyme>,</l>
        <l id="s12:l2" met="2" type="+-">Moet hem <rhyme label="a" type="f" corresp="#s12:l1">wachten</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">Voor den Angel, en het <rhyme label="b" type="m">Aas</rhyme>,</l>
        <l id="s12:l4" met="4" type="+-">Welk de Zatan gaat <rhyme label="c" type="f">bereiden</rhyme>,</l>
        <l id="s12:l5" met="2" type="+-">Te <rhyme label="c" type="f" corresp="#s12:l4">verleiden</rhyme></l>
        <l id="s12:l6" met="4" type="+-">Den zorgloozen blinden <rhyme label="b" type="m" corresp="#s12:l3">dwaas</rhyme>!</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Dank zy Godt! voor zijne <rhyme label="a" type="f">zegen</rhyme>,</l>
        <l id="s13:l2" met="2" type="+-">Weer <rhyme label="a" type="f" corresp="#s13:l1">verkregen</rhyme>,</l>
        <l id="s13:l3" met="4" type="+-">Die ons zullen <rhyme label="b" type="m">overvloet</rhyme></l>
        <l id="s13:l4" met="4" type="+-">Van zijn Schepselen gaat <rhyme label="c" type="f">geven</rhyme>,</l>
        <l id="s13:l5" met="2" type="+-">En daar <rhyme label="c" type="f" corresp="#s13:l4">neven</rhyme>;</l>
        <l id="s13:l6" met="4" type="+-">In den Hemel beter <rhyme label="b" type="m" corresp="#s13:l3">goedt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

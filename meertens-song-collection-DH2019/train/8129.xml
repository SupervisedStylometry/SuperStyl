    <melody>Hij mag wel vrolijk wezen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author>Jan Jansz. Deutel</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">SIet hoe fijn en hoe lieflijck <rhyme label="a" type="f">mede</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Ende hoe ghenoeghlijck <rhyme label="b" type="m">ist</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Dat broederen in <rhyme label="a" type="f" corresp="#s1:l1">vrede</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Woonen met <rhyme label="a" type="f" corresp="#s1:l1">eendrachtighede</rhyme></l>
        <l id="s1:l5" met="4" type="+-">By malcanderen sonder <rhyme label="b" type="m" corresp="#s1:l2">twist</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">'Tis ghelijck als de <rhyme label="a" type="f">vermaerde</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Balsem, kostelijck en <rhyme label="b" type="m">goet</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Die vloeyt als <rhyme label="a" type="f" corresp="#s2:l1">d'onghespaerde</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Van den hoofde in den <rhyme label="a" type="f" corresp="#s2:l1">baerde</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Ia den baert van Aaron <rhyme label="b" type="m" corresp="#s2:l2">soet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Die daer van boven <rhyme label="a" type="f">verheven</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Tot in sijn kleet <rhyme label="b" type="m">afvloeyt</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Ghelijck den dauw <rhyme label="a" type="f" corresp="#s3:l1">becleven</rhyme></l>
        <l id="s3:l4" met="4" type="+-">die van Hermon daelt <rhyme label="a" type="f" corresp="#s3:l1">gedreven</rhyme></l>
        <l id="s3:l5" met="4" type="+-">Ende de berghen Syons <rhyme label="b" type="m" corresp="#s3:l2">besproeyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Want die Heere <rhyme label="a" type="f">onversweghen</rhyme></l>
        <l id="s4:l2" met="4" type="+-">die belooft te gheven <rhyme label="b" type="m">aldaer</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Sijnen troostelijcken <rhyme label="a" type="f" corresp="#s4:l1">seghen</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">End' het leven al te <rhyme label="a" type="f" corresp="#s4:l1">deghen</rhyme></l>
        <l id="s4:l5" met="4" type="+-">In der eeuwigheyt <rhyme label="b" type="m" corresp="#s4:l2">eenpaer</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

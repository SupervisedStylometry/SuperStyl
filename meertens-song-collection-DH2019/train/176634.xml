  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Dat Wet-Boeck was <rhyme label="a" type="f">verloren</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Verborghene menich <rhyme label="b" type="m">jaer</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Maer Iosias <rhyme label="a" type="f" corresp="#s1:l1">verkoren</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Heeftet vonden <rhyme label="b" type="m" corresp="#s1:l2">voorwaer</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Die ‘t Wet-Boeck <rhyme label="b" type="m" corresp="#s1:l2">naer</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Wil volghen, nae ‘t <rhyme label="a" type="f" corresp="#s1:l1">behooren</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Dient herboren seer <rhyme label="b" type="m" corresp="#s1:l2">klaer</rhyme>,</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Om dat herboren <rhyme label="a" type="f">klaerlijck</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Niet is de werelt <rhyme label="b" type="m">blent</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Verloren heeft sy <rhyme label="a" type="f" corresp="#s2:l1">waerlijck</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Noch ‘t Wet-Boeck <rhyme label="b" type="m" corresp="#s2:l2">excellent</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Den Vader <rhyme label="b" type="m" corresp="#s2:l2">kent</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Gheen kinderen <rhyme label="a" type="f" corresp="#s2:l1">eerbaerlijck</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Dan die zijn <rhyme label="b" type="m" corresp="#s2:l2">om-ghewent</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">De om-ghewende <rhyme label="a" type="f">sinnen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Soo ‘s Heeren Wet-Boeck <rhyme label="b" type="m">raet</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Godt hert-grondich <rhyme label="a" type="f" corresp="#s3:l1">beminnen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Vreesende sijn <rhyme label="b" type="m" corresp="#s3:l2">Mandaet</rhyme>,</l>
        <l id="s3:l5" met="2" type="-+">Niemandts <rhyme label="b" type="m" corresp="#s3:l2">Placcaet</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Kan haer yet doen <rhyme label="a" type="f" corresp="#s3:l1">beginnen</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Dan in dat Wet-Boeck <rhyme label="b" type="m" corresp="#s3:l2">staet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Soo in ‘t Wet-boeck <rhyme label="a" type="f">verheven</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Staet gheschreven seer <rhyme label="b" type="m">fijn</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Daer nae moet Gods volck <rhyme label="a" type="f" corresp="#s4:l1">leven</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Ghesticht in elck <rhyme label="b" type="m" corresp="#s4:l2">termijn</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Naemen noch <rhyme label="b" type="m" corresp="#s4:l2">schijn</rhyme>:</l>
        <l id="s4:l6" met="3" type="-+">Kan gheen Christendom <rhyme label="a" type="f" corresp="#s4:l1">gheven</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">De daet moeter by <rhyme label="b" type="m" corresp="#s4:l2">zijn</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Daermen gheen daet kan <rhyme label="a" type="f">mercken</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Die licht, als licht <rhyme label="b" type="m">minjoot</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Hoe ongeloovighe <rhyme label="a" type="f" corresp="#s5:l1">Klercken</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Zijnde, in ‘t roemen <rhyme label="b" type="m" corresp="#s5:l2">groot</rhyme>,</l>
        <l id="s5:l5" met="2" type="-+">Iacobus <rhyme label="b" type="m" corresp="#s5:l2">bloot</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Ghetuyght, dat sonder <rhyme label="a" type="f" corresp="#s5:l1">wercken</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Sulcken gheloov is <rhyme label="b" type="m" corresp="#s5:l2">doot</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Veel van ‘t gheloove <rhyme label="a" type="f">spreken</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Sonder vruchten <rhyme label="b" type="m">perfeckt</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Dats als een licht <rhyme label="a" type="f" corresp="#s6:l1">t’ontsteken</rhyme></l>
        <l id="s6:l4" met="3" type="-+">En te houden <rhyme label="b" type="m" corresp="#s6:l2">bedeckt</rhyme>,</l>
        <l id="s6:l5" met="2" type="-+">Sulck roem <rhyme label="b" type="m" corresp="#s6:l2">bevleckt</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Van Godt, die ‘t al sal <rhyme label="a" type="f" corresp="#s6:l1">wreken</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Werdt ‘t sijnder tijdt <rhyme label="b" type="m" corresp="#s6:l2">begheckt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Ghy roemers traech van <rhyme label="a" type="f">zede</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Vol gheloovich <rhyme label="b" type="m">samblant</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Merckt wat Iosias <rhyme label="a" type="f" corresp="#s7:l1">dede</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Doen hy het Wet-Boeck <rhyme label="b" type="m" corresp="#s7:l2">vant</rhyme>,</l>
        <l id="s7:l5" met="2" type="-+">Kloeck en <rhyme label="b" type="m" corresp="#s7:l2">vaylijant</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Gheboodt in Dorp en <rhyme label="a" type="f" corresp="#s7:l1">Stede</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Te doen des Wets <rhyme label="b" type="m" corresp="#s7:l2">verstant</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Oock deed’ hy <rhyme label="a" type="f">derghelijcke</rhyme></l>
        <l id="s8:l2" met="3" type="-+">‘t Geen ‘t Wet-Boeck uyt gaf <rhyme label="b" type="m">net</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Uyt-roepende <rhyme label="a" type="f" corresp="#s8:l1">publijcke</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Baals vaten seer <rhyme label="b" type="m" corresp="#s8:l2">besmet</rhyme>,</l>
        <l id="s8:l5" met="2" type="-+">Als Christen <rhyme label="b" type="m" corresp="#s8:l2">ledt</rhyme></l>
        <l id="s8:l6" met="3" type="-+">‘t Gheloove <rhyme label="a" type="f" corresp="#s8:l1">autentijcke</rhyme></l>
        <l id="s8:l7" met="3" type="-+">Beleefd’ hy nae de <rhyme label="b" type="m" corresp="#s8:l2">Wet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Nae ‘s Heeren Wet-Boeck <rhyme label="a" type="f">prijslijck</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Leefde Iosias <rhyme label="b" type="m">wel</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Vernielende <rhyme label="a" type="f" corresp="#s9:l1">advijslijck</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Den Altaer te <rhyme label="b" type="m" corresp="#s9:l2">Bethel</rhyme>,</l>
        <l id="s9:l5" met="2" type="-+">Gheensins <rhyme label="b" type="m" corresp="#s9:l2">rebel</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Was hy, maer in als <rhyme label="a" type="f" corresp="#s9:l1">wijslijck</rhyme></l>
        <l id="s9:l7" met="3" type="-+">Volghd’ hy ‘s Heeren <rhyme label="b" type="m" corresp="#s9:l2">bevel</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Die name willen <rhyme label="a" type="f">draghen</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Te sijn van ‘t Christen <rhyme label="b" type="m">zaet</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Die moeten al haer <rhyme label="a" type="f" corresp="#s10:l1">daghen</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Doen nae Iosias <rhyme label="b" type="m" corresp="#s10:l2">daet</rhyme>,</l>
        <l id="s10:l5" met="2" type="-+">Laten het <rhyme label="b" type="m" corresp="#s10:l2">quaet</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Goet doen, nae Gods <rhyme label="a" type="f" corresp="#s10:l1">behaghen</rhyme></l>
        <l id="s10:l7" met="3" type="-+">Alsoo in ‘t Wet-Boeck <rhyme label="b" type="m" corresp="#s10:l2">staet</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Maer die als <rhyme label="a" type="f">Waterschoten</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Vruchteloos sijn <rhyme label="b" type="m">bekent</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Voor dien is nu <rhyme label="a" type="f" corresp="#s11:l1">ghesloten</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Het Wet-Boeck <rhyme label="b" type="m" corresp="#s11:l2">excellent</rhyme>,</l>
        <l id="s11:l5" met="2" type="-+">Christenen <rhyme label="b" type="m" corresp="#s11:l2">jent</rhyme></l>
        <l id="s11:l6" met="3" type="-+">Zijn Gods <rhyme label="a" type="f" corresp="#s11:l1">medeghenoten</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">Doende ‘s Wets <rhyme label="b" type="m" corresp="#s11:l2">mandament</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Die hoort Gods woort <rhyme label="a" type="f">onwijckelijck</rhyme></l>
        <l id="s12:l2" met="3" type="-+">En doet soo ‘t selve <rhyme label="b" type="m">leert</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Is een wijs Man <rhyme label="a" type="f" corresp="#s12:l1">ghelijckelijck</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Op den steen <rhyme label="b" type="m" corresp="#s12:l2">ghefondeert</rhyme>,</l>
        <l id="s12:l5" met="2" type="-+">Wiens huys <rhyme label="b" type="m" corresp="#s12:l2">ghe-eert</rhyme></l>
        <l id="s12:l6" met="3" type="-+">Door storm, reghen, <rhyme label="a" type="f" corresp="#s12:l1">perijckelijck</rhyme></l>
        <l id="s12:l7" met="3" type="-+">Gheensins werdt <rhyme label="b" type="m" corresp="#s12:l2">gheraseert</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Contrarie van <rhyme label="a" type="f">desen</rhyme></l>
        <l id="s13:l2" met="3" type="-+">Die ‘t woort hoort, en niet <rhyme label="b" type="m">doet</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Moet als een sot Man <rhyme label="a" type="f" corresp="#s13:l1">wesen</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Die oyt op drijf-zant <rhyme label="b" type="m" corresp="#s13:l2">wroet</rhyme>,</l>
        <l id="s13:l5" met="2" type="-+">Wiens huys niet <rhyme label="b" type="m" corresp="#s13:l2">goet</rhyme></l>
        <l id="s13:l6" met="3" type="-+">Door storm-winden <rhyme label="a" type="f" corresp="#s13:l1">gheresen</rhyme></l>
        <l id="s13:l7" met="3" type="-+">Moet vallen onder <rhyme label="b" type="m" corresp="#s13:l2">voet</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Nu machmen tusschen <rhyme label="a" type="f">scheyden</rhyme></l>
        <l id="s14:l2" met="3" type="-+">Uyt dit Schriftich <rhyme label="b" type="m">bediet</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Wie ‘t Wet-Boeck vindt van <rhyme label="a" type="f" corresp="#s14:l1">beyden</rhyme></l>
        <l id="s14:l4" met="3" type="-+">Of ‘t vinden niet <rhyme label="b" type="m" corresp="#s14:l2">gheschiet</rhyme>,</l>
        <l id="s14:l5" met="2" type="-+">Elck voor hem <rhyme label="b" type="m" corresp="#s14:l2">siet</rhyme>,</l>
        <l id="s14:l6" met="3" type="-+">Gheloovich roem <rhyme label="a" type="f" corresp="#s14:l1">verbreyden</rhyme></l>
        <l id="s14:l7" met="3" type="-+">Sonder daet, gelt al <rhyme label="b" type="m" corresp="#s14:l2">niet</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Door siet u <rhyme label="a" type="f">al-ghemeene</rhyme></l>
        <l id="s15:l2" met="3" type="-+">In de klare Wet <rhyme label="b" type="m">vry</rhyme>,</l>
        <l id="s15:l3" met="3" type="-+">Gheen hoorders zijt <rhyme label="a" type="f" corresp="#s15:l1">alleene</rhyme>,</l>
        <l id="s15:l4" met="3" type="-+">Maer doenders oock daer <rhyme label="b" type="m" corresp="#s15:l2">by</rhyme>,</l>
        <l id="s15:l5" met="2" type="-+">Hier by sult <rhyme label="b" type="m" corresp="#s15:l2">ghy</rhyme></l>
        <l id="s15:l6" met="3" type="-+">Zalich zijn in ‘t werck <rhyme label="a" type="f" corresp="#s15:l1">reene</rhyme></l>
        <l id="s15:l7" met="3" type="-+">In dien ‘t nae Gods woort <rhyme label="b" type="m" corresp="#s15:l2">zy</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="3" type="-+">Die dan nae ‘t woorts <rhyme label="a" type="f">vermonden</rhyme></l>
        <l id="s16:l2" met="3" type="-+">Doen des Heeren <rhyme label="b" type="m">Ghebodt</rhyme>,</l>
        <l id="s16:l3" met="3" type="-+">Hebben ‘t Wet-Boeck <rhyme label="a" type="f" corresp="#s16:l1">ghevonden</rhyme>,</l>
        <l id="s16:l4" met="3" type="-+">Wien dat naeckt ‘t zaligh <rhyme label="b" type="m" corresp="#s16:l2">lot</rhyme>:</l>
        <l id="s16:l5" met="2" type="-+">Oorlof voor ‘t <rhyme label="b" type="m" corresp="#s16:l2">slot</rhyme></l>
        <l id="s16:l6" met="3" type="-+">Recht ghelovighe <rhyme label="a" type="f" corresp="#s16:l1">gronden</rhyme>,</l>
        <l id="s16:l7" met="3" type="-+">Blijft dus bevolen <rhyme label="b" type="m" corresp="#s16:l2">Godt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <author>Leenaert Clock</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Heere, op u betrou ick <rhyme label="a" type="m">vast</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Laet my niet gaen tot <rhyme label="b" type="f">schanden</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Verlost mijn ziele van den <rhyme label="a" type="m" corresp="#s1:l1">last</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Aller mijner <rhyme label="b" type="f" corresp="#s1:l2">vyanden</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">Door u gherechticheyt helpt <rhyme label="c" type="m">my</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Mijn stercke vasticheyt zijt <rhyme label="c" type="m" corresp="#s1:l5">ghy</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Ick vlie tot uwen <rhyme label="b" type="f" corresp="#s1:l2">handen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">O ghy mijn vaste borch en <rhyme label="a" type="m">slot</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Mijn toeverlaet en <rhyme label="b" type="f">Heere</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">V rechte handt help my (O <rhyme label="a" type="m" corresp="#s2:l1">Godt</rhyme>)</l>
        <l id="s2:l4" met="3" type="-+">T’gheschied’ tot ws Naems <rhyme label="b" type="f" corresp="#s2:l2">eere</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">T’is mijn hop’ van der jonckheyt <rhyme label="c" type="m">aen</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Door u ben ick onthouden <rhyme label="c" type="m" corresp="#s2:l5">saen</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Van s’moeders lichaems <rhyme label="b" type="f" corresp="#s2:l2">teere</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Iae ghy Heer hebt my <rhyme label="a" type="m">uytgheruckt</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Van u is mijn <rhyme label="b" type="f">becomen</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Door u is mijn sake <rhyme label="a" type="m" corresp="#s3:l1">gheluckt</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Mijn sterckt is van u <rhyme label="b" type="f" corresp="#s3:l2">comen</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Laet mijnen mondt ws roems vol <rhyme label="c" type="m">zijn</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Mijn ziel’ u stadich prijsen <rhyme label="c" type="m" corresp="#s3:l5">fijn</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Dancken met allen <rhyme label="b" type="f" corresp="#s3:l2">vromen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Te rugg’ verwerpt my, Heere, <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Nu in mijn oude <rhyme label="b" type="f">daghen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En als mijn craqcht afneemt, <rhyme label="a" type="m" corresp="#s4:l1">aensiet</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Mijns vyandts boose <rhyme label="b" type="f" corresp="#s4:l2">laghen</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Die nu hoogh roept met sijnen <rhyme label="c" type="m">stem</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">En seyt: Godt heeft verlaten <rhyme label="c" type="m" corresp="#s4:l5">hem</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Grijpt en wilt hem <rhyme label="b" type="f" corresp="#s4:l2">naejaghen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">En weest doch Heer van my niet <rhyme label="a" type="m">wijdt</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Haest my te helpen <rhyme label="b" type="f">spoedich</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Schaemt en ontbreeckt haer t’gheener <rhyme label="a" type="m" corresp="#s5:l1">tijdt</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Com’ op haer <rhyme label="b" type="f" corresp="#s5:l2">overvloedich</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Die teghen mijn Ziel setten <rhyme label="c" type="m">haer</rhyme></l>
        <l id="s5:l6" met="4" type="-+">Smaedt en schimp, bedecktse <rhyme label="c" type="m" corresp="#s5:l5">swaer</rhyme></l>
        <l id="s5:l7" met="3" type="-+">In al haer doen <rhyme label="b" type="f" corresp="#s5:l2">hooghmoedich</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Recht voortgaende, wil ick <rhyme label="a" type="m">altoos</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Ws beroemens meer <rhyme label="b" type="f">maken</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Vercondighen met mijne <rhyme label="a" type="m" corresp="#s6:l1">voos</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Vwe gherechte <rhyme label="b" type="f" corresp="#s6:l2">saken</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Daghelijcx uwe <rhyme label="c" type="m">salicheyt</rhyme></l>
        <l id="s6:l6" met="4" type="-+">Die ick om tellen <rhyme label="c" type="m" corresp="#s6:l5">onbereyt</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Ben, en te swaer van <rhyme label="b" type="f" corresp="#s6:l2">spraken</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">En ick wil ingaen van der  <rhyme label="a" type="m">macht</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Des Heeren nu te <rhyme label="b" type="f">spreken</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">V gherechticheyt ick <rhyme label="a" type="m" corresp="#s7:l1">betracht</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Die altijdt is <rhyme label="b" type="f" corresp="#s7:l2">ghebleken</rhyme>:</l>
        <l id="s7:l5" met="4" type="-+">Van joncx op hebt ghy my <rhyme label="c" type="m">gheleert</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Noch word’ u lof van my <rhyme label="c" type="m" corresp="#s7:l5">vermeert</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Vercondicht <rhyme label="b" type="f" corresp="#s7:l2">onbesweken</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Niet en verlaet my doch, O <rhyme label="a" type="m">Godt</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Nu ick oudt ben van <rhyme label="b" type="f">Iaren</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Als ick grijs worde (jae Heer) <rhyme label="a" type="m" corresp="#s8:l1">tot</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Dat ick noch mach <rhyme label="b" type="f" corresp="#s8:l2">verclaren</rhyme></l>
        <l id="s8:l5" met="4" type="-+">Kindts kinderen uwen arm <rhyme label="c" type="m">sterck</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Die ghy (O Heere) stelt te <rhyme label="c" type="m" corresp="#s8:l5">werck</rhyme></l>
        <l id="s8:l7" met="3" type="-+">Voor u trouwe <rhyme label="b" type="f" corresp="#s8:l2">Dienaren</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Iae u gherechticheyt, hooh, <rhyme label="a" type="m">rijck</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Reyckt: ghy doet groote <rhyme label="b" type="f">dinghen</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">O Godt, wie is doch ws <rhyme label="a" type="m" corresp="#s9:l1">ghelijck</rhyme>?</l>
        <l id="s9:l4" met="3" type="-+">Ghy die mijn Ziel laet <rhyme label="b" type="f" corresp="#s9:l2">bringhen</rhyme></l>
        <l id="s9:l5" met="4" type="-+">In seer veel benautheden <rhyme label="c" type="m">groot</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Verwecktse dan weer van den <rhyme label="c" type="m" corresp="#s9:l5">doot</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Doets’ uyt der aerden <rhyme label="b" type="f" corresp="#s9:l2">springhen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Crachtich en groot maeckt ghy uyt, <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Veel troost gaet ghy my <rhyme label="b" type="f">gheven</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Soo danck ick u met Psalmen <rhyme label="a" type="m" corresp="#s10:l1">seer</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Van uwe trou <rhyme label="b" type="f" corresp="#s10:l2">verheven</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Ick lofsingh u op’t <rhyme label="c" type="m">Herpen-spel</rhyme>.</l>
        <l id="s10:l6" met="4" type="-+">Ghy Heylighe in <rhyme label="c" type="m" corresp="#s10:l5">Israel</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Die eeuwich houdt het <rhyme label="b" type="f" corresp="#s10:l2">leven</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Kent, Heer, mijn lippen, die zijn <rhyme label="a" type="m">bly</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Dat ick u soo <rhyme label="b" type="f">lofsinghe</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">En mijn Ziel, die ghy maeckte <rhyme label="a" type="m" corresp="#s11:l1">vry</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Daghelijcx ick <rhyme label="b" type="f" corresp="#s11:l2">volbringhe</rhyme></l>
        <l id="s11:l5" met="4" type="-+">Wt te vercondighen het <rhyme label="c" type="m">recht</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">En u gherechticheyt niet <rhyme label="c" type="m" corresp="#s11:l5">slecht</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">Dus ick int hert’ <rhyme label="b" type="f" corresp="#s11:l2">opspringhe</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Segt: die soecken mijn <rhyme label="a" type="m">ongheluck</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Dat sy haer moeten <rhyme label="b" type="f">schamen</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Vertsaecht, als ghyse stelt te <rhyme label="a" type="m" corresp="#s12:l1">ruck</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Door u cracht hoogh van <rhyme label="b" type="f" corresp="#s12:l2">namen</rhyme>:</l>
        <l id="s12:l5" met="4" type="-+">O Godt Vader in s’Hemels <rhyme label="c" type="m">Throon</rhyme>,</l>
        <l id="s12:l6" met="4" type="-+">Door Iesum Christum uwen <rhyme label="c" type="m" corresp="#s12:l5">Soon</rhyme></l>
        <l id="s12:l7" met="3" type="-+">Moet dit doch worden, <rhyme label="b" type="f" corresp="#s12:l2">Amen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

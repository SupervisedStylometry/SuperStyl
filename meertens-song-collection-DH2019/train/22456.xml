      <category translation="religion">godsdienst</category>
    </categories>
  <author>Anonymous</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Weerelijck eere, en tijdtlijck <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Wellust en allen <rhyme label="a" type="m" corresp="#s1:l1">oueruloet</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Is als een Gras hier nu <rhyme label="b" type="f">gheset</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Allen pracht, en de stouten <rhyme label="c" type="m">roem</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Vergaet als een seer witte <rhyme label="c" type="m" corresp="#s1:l4">bloem</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">O menschen hier op wel <rhyme label="b" type="f" corresp="#s1:l3">let</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">En versorghet die Siele <rhyme label="b" type="f" corresp="#s1:l3">bet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Stelt u dijn eynde daghelijcx <rhyme label="a" type="m">vuer</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Ghedenckt dat die doot is voor die <rhyme label="a" type="m" corresp="#s2:l1">duer</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">En wil met u van hier <rhyme label="b" type="f">voortgaen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Hy clopt u aen, ghy moet van <rhyme label="c" type="m">hier</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Ghy moet betalen <rhyme label="c" type="m" corresp="#s2:l4">schier</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Hebt ghy nu dan recht <rhyme label="b" type="f" corresp="#s2:l3">ghedaen</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">So vindy goeden loon <rhyme label="b" type="f" corresp="#s2:l3">zaen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Als die siele ter hellen <rhyme label="a" type="m">sinckt</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">En tvleesch vanden wormen is <rhyme label="a" type="m" corresp="#s3:l1">verslinckt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">So salt weder <rhyme label="b" type="f">verrijsen</rhyme>:</l>
        <l id="s3:l4" met="4" type="-+">En sal voor dijne Goddelijcke <rhyme label="c" type="m">cracht</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Rekenschap gheuen met <rhyme label="c" type="m" corresp="#s3:l4">aendacht</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Ach tot wat groot <rhyme label="b" type="f" corresp="#s3:l3">afgrijsen</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Sult ghy die boose <rhyme label="b" type="f" corresp="#s3:l3">wijsen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Daer sal een reyn herte en <rhyme label="a" type="m">vat</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Veel meer ghelden dan allen <rhyme label="a" type="m" corresp="#s4:l1">schat</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">En aller menschen <rhyme label="b" type="f">goeden</rhyme>:</l>
        <l id="s4:l4" met="4" type="-+">Die hem versoent met Godt seer <rhyme label="c" type="m">groot</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">En sal daer lijden gheenen <rhyme label="c" type="m" corresp="#s4:l4">noot</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Die Godts wille doet, met <rhyme label="b" type="f" corresp="#s4:l3">moeden</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Sal Godt daer oock <rhyme label="b" type="f" corresp="#s4:l3">behoeden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Een goede conscientie <rhyme label="a" type="m">reyn</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Is beter dan <rhyme label="a" type="m" corresp="#s5:l1">Edelsteyn</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">En costelijcker dan <rhyme label="b" type="f">Gout</rhyme>:</l>
        <l id="s5:l4" met="4" type="-+">Die, die van Christo <rhyme label="c" type="m">erlangt</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">En hem ordentlijck <rhyme label="c" type="m" corresp="#s5:l4">aenhangt</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Den quijtet Godt <rhyme label="b" type="f" corresp="#s5:l3">vertrout</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Sijn sonden <rhyme label="b" type="f" corresp="#s5:l3">menichfout</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Gheen Rijckdom noch oock <rhyme label="a" type="m">ghewelt</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Gheen scierlijckheyt hoe schoon <rhyme label="a" type="m" corresp="#s6:l1">ghestelt</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Helpt yet ter <rhyme label="b" type="f">salicheyt</rhyme>:</l>
        <l id="s6:l4" met="4" type="-+">Ten sy dat herte oock <rhyme label="c" type="m">ghelijck</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">In Godes gauen hier sy <rhyme label="c" type="m" corresp="#s6:l4">rijck</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">En versciert met <rhyme label="b" type="f" corresp="#s6:l3">gheestelijckheyt</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">In Christi <rhyme label="b" type="f" corresp="#s6:l3">deelachticheyt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Christus die spreeckt <rhyme label="a" type="m">openbaer</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">En seyt tot alle menschen <rhyme label="a" type="m" corresp="#s7:l1">claer</rhyme>:</l>
        <l id="s7:l3" met="3" type="-+">Die met my leuen <rhyme label="b" type="f">wil</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Die neme op syn cruyce <rhyme label="c" type="m">schier</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">En volghe my ghehoorsaem <rhyme label="c" type="m" corresp="#s7:l4">hier</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Doende opt tsweerelts <rhyme label="b" type="f" corresp="#s7:l3">hiel</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Niet Adams, maer mijnen wil <rhyme label="b" type="f" corresp="#s7:l3">stil</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">O mensche Jeshum Christum <rhyme label="a" type="m">aensiet</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Dewijl hy hem hier self <rhyme label="a" type="m" corresp="#s8:l1">aenbiet</rhyme>:</l>
        <l id="s8:l3" met="3" type="-+">Wilt u onder hem <rhyme label="b" type="f">gheuen</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Neempt op syn iock, licht en <rhyme label="c" type="m">soet</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">En volcht hem nae, met trouwen <rhyme label="c" type="m" corresp="#s8:l4">moet</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">So sult ghy syn <rhyme label="b" type="f" corresp="#s8:l3">verheuen</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">En met den Enghelen <rhyme label="b" type="f" corresp="#s8:l3">leuen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Ghelooft den Heere van herten <rhyme label="a" type="m">gront</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">En belijt hem oock met den <rhyme label="a" type="m" corresp="#s9:l1">mont</rhyme>:</l>
        <l id="s9:l3" met="3" type="-+">Prijst Godt hier met der <rhyme label="b" type="f">daet</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">In synen dienst u slecht <rhyme label="c" type="m">gheneert</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">En doet wat syn woordt recht <rhyme label="c" type="m" corresp="#s9:l4">begheert</rhyme>:</l>
        <l id="s9:l6" met="3" type="-+">So sal hy u met syn <rhyme label="b" type="f" corresp="#s9:l3">ghenaedt</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Altijt bystaen sonder <rhyme label="b" type="f" corresp="#s9:l3">verlaet</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Regeert u nae syn <rhyme label="a" type="m">leere</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Gheeft hem lof, prijs, en <rhyme label="a" type="m" corresp="#s10:l1">eere</rhyme>:</l>
        <l id="s10:l3" met="3" type="-+">Met <rhyme label="b" type="f">onderdanicheyt</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Spreeckt met herten <rhyme label="c" type="m">ghehuldich</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">O, Godt, een en <rhyme label="c" type="m" corresp="#s10:l4">Drijuuldich</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Dy sy lof, en <rhyme label="b" type="f" corresp="#s10:l3">heerlijckheyt</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Hier, en daer, in <rhyme label="b" type="f" corresp="#s10:l3">eewicheyt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

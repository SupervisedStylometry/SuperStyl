  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">MYn Hert is niet verhoocht O <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Noch Hovaerdich mijn Oogen <rhyme label="a" type="m" corresp="#s1:l1">seer</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Ick wandel niet in Dingen <rhyme label="b" type="m">daer</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Die my te hooch syn end te <rhyme label="b" type="m" corresp="#s1:l3">swaer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Als ick mijn Siele stilden <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">So wert mijn Siel ghespeenet <rhyme label="a" type="m" corresp="#s2:l1">(siet</rhyme>)</l>
        <l id="s2:l3" met="4" type="-+">Ghelijck een Kindeken noch <rhyme label="b" type="m">cleyn</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Ghespeent is sonder Troost <rhyme label="b" type="m" corresp="#s2:l3">alleyn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Op Godt den Heer hoop <rhyme label="a" type="m">Israel</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Betrouw' hem Lijff end Siel al <rhyme label="a" type="m" corresp="#s3:l1">wel</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Want by hem is schoon Hulp <rhyme label="b" type="m">bereydt</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Van nu aen tot in <rhyme label="b" type="m" corresp="#s3:l3">eewicheyt</rhyme>.</l>
      </lg>
    </lg>
  </text>

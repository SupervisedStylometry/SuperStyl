  <author>Philippus van Sorgen</author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Zoete Iesu zuiv’re <rhyme label="a" type="f">zoetheid</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Deel my van uw zoetheud <rhyme label="b" type="m">meê</rhyme>;</l>
        <l id="s1:l3" met="4" type="+-">Mengt een dropje, door uw <rhyme label="a" type="f" corresp="#s1:l1">goetheid</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">In mijn bitt’re ziele <rhyme label="b" type="m" corresp="#s1:l2">wee</rhyme>;</l>
        <l id="s1:l5" met="4" type="+-">Zalf daar meed’ haar doode <rhyme label="c" type="m">wond</rhyme>’,</l>
        <l id="s1:l6" met="4" type="+-">My gegeven door de <rhyme label="c" type="m" corresp="#s1:l5">zond</rhyme>’.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Heil’ge Iesu, enkel <rhyme label="a" type="f">Heilig</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Heil’gt my door uw Geest en <rhyme label="b" type="m">Woord</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Op dat ik mijn leven <rhyme label="a" type="f" corresp="#s2:l1">veilig</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">En gerust, voltrek nu <rhyme label="b" type="m" corresp="#s2:l2">voort</rhyme>?</l>
        <l id="s2:l5" met="4" type="+-">Dek met uwe <rhyme label="c" type="m">Heyligheyd</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Mijne naakt’ <rhyme label="c" type="m" corresp="#s2:l5">elendigheyd</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Ach beminnelijke <rhyme label="a" type="f">Iesu</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Wisse Liefde, <rhyme label="b" type="m">Liefde-bron</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">O dat ik dog eens in dees <rhyme label="a" type="f" corresp="#s3:l1">uw</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Well’, mijn ziel-dorst lesschen <rhyme label="b" type="m" corresp="#s3:l2">kon</rhyme>?</l>
        <l id="s3:l5" met="4" type="+-">En dat eens haar vloejing <rhyme label="c" type="m">viel</rhyme></l>
        <l id="s3:l6" met="4" type="+-">In mijn’ uitgedroogde <rhyme label="c" type="m" corresp="#s3:l5">ziel</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Waarde Iesu, dierbaar’ <rhyme label="a" type="f">Heiland</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Die ik hoger houd’ en <rhyme label="b" type="m">schatt</rhyme>’</l>
        <l id="s4:l3" met="4" type="+-">Dan al ’s Aardrijks Bouw- en <rhyme label="a" type="f" corresp="#s4:l1">Weyland</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">En al ’s Wereldsch Gout en <rhyme label="b" type="m" corresp="#s4:l2">Schat</rhyme>;</l>
        <l id="s4:l5" met="4" type="+-">Ey bekroon mijn <rhyme label="c" type="m">nietigheid</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Met uw dier’bre <rhyme label="c" type="m" corresp="#s4:l5">waardigheid</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">O Volmaakte Iesus! gunt <rhyme label="a" type="f">my</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Die gebrekkig en <rhyme label="b" type="m">mismaakt</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Ben, te worden (want dat kunt <rhyme label="a" type="f" corresp="#s5:l1">gy</rhyme>)</l>
        <l id="s5:l4" met="4" type="+-">Daag’lix meer en meer <rhyme label="b" type="m" corresp="#s5:l2">volmaakt</rhyme>;</l>
        <l id="s5:l5" met="4" type="+-">Tot ik ben gestegen <rhyme label="c" type="m">op</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Der volmaaktheid hoogste <rhyme label="c" type="m" corresp="#s5:l5">top</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Sterke Iesu, Held in ‘t <rhyme label="a" type="f">strijden</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Iudaas Leeuw, die <rhyme label="b" type="m">overwint</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Alle die u <rhyme label="a" type="f" corresp="#s6:l1">tegenstrijden</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Ik ben teerder als een <rhyme label="b" type="m" corresp="#s6:l2">kind</rhyme>;</l>
        <l id="s6:l5" met="4" type="+-">Maak my met uw Sterkte <rhyme label="c" type="m">sterk</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Dat ‘k mijn geest’lijk werk vol <rhyme label="c" type="m" corresp="#s6:l5">werk</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Rijke Iesu slae uw’ <rhyme label="a" type="f">oogen</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Op my arme <rhyme label="b" type="m">Bedelaar</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Wiens gebrek en <rhyme label="a" type="f" corresp="#s7:l1">onvermogen</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">U bekent en <rhyme label="b" type="m" corresp="#s7:l2">openbaar</rhyme></l>
        <l id="s7:l5" met="4" type="+-">Zuhb; werpt my dog ietwat <rhyme label="c" type="m">toe</rhyme></l>
        <l id="s7:l6" met="4" type="+-">In mijn geestlijck <rhyme label="c" type="m" corresp="#s7:l5">arremoê</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Goede Iesu goetheid <rhyme label="a" type="f">zelve</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Laat uw Goetheid in mijn <rhyme label="b" type="m">hert</rhyme></l>
        <l id="s8:l3" met="4" type="+-">Dien verdorven grond <rhyme label="a" type="f" corresp="#s8:l1">doordelven</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Die vol quaad bevonden <rhyme label="b" type="m" corresp="#s8:l2">wert</rhyme>:</l>
        <l id="s8:l5" met="4" type="+-">En verdelg dat dood’lijk <rhyme label="c" type="m">quaad</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">‘t Welk u Goetheid tegen <rhyme label="c" type="m" corresp="#s8:l5">staat</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Vriendelijke Iesu <rhyme label="a" type="f">Christe</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Die de Zondaars vriend’lijk <rhyme label="b" type="m">noodt</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Trek my (die my vaak <rhyme label="a" type="f" corresp="#s9:l1">vergiste</rhyme></l>
        <l id="s9:l4" met="4" type="+-">In ‘t bedrijf van sonden <rhyme label="b" type="m" corresp="#s9:l2">snood</rhyme>)</l>
        <l id="s9:l5" met="4" type="+-">Door uw zoete <rhyme label="c" type="m">vriend’lijkheid</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">Uit der zonden <rhyme label="c" type="m" corresp="#s9:l5">dienstbaarheid</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

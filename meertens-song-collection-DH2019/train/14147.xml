  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">DIe volle wensch' mijns <rhyme label="a" type="f">herten</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Is uwer Sielen <rhyme label="b" type="m">welvaert</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Voor alle druck ende <rhyme label="a" type="f" corresp="#s1:l1">smerten</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Dat u die Heere <rhyme label="b" type="m" corresp="#s1:l2">bewaert</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Mijn broeders inden <rhyme label="c" type="f">Heere</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Ende susters vroom int <rhyme label="d" type="m">ghemoet</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Ghetrau na Christus <rhyme label="c" type="f" corresp="#s1:l5">leere</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Haeckt nae de vrede <rhyme label="d" type="m" corresp="#s1:l6">soet</rhyme>,</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Aen u ghy jonghe <rhyme label="a" type="f">Ghesellen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Schrijf ick mijn Liet <rhyme label="b" type="m">ghemeyn</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Wt liefden gae ick dat <rhyme label="a" type="f" corresp="#s2:l1">stellen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Tot prijs des Heeren <rhyme label="b" type="m" corresp="#s2:l2">Reyn</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Neempt ghy een Maecht te <rhyme label="c" type="f">Echte</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Onder Gods kinderen <rhyme label="d" type="m">bequaem</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Och latet ons toch te <rhyme label="c" type="f" corresp="#s2:l5">rechte</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Vergaren in zijnen <rhyme label="d" type="m" corresp="#s2:l6">naem</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Laet ons doch niet door <rhyme label="a" type="f">moeten</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Nu soecken een <rhyme label="b" type="m">Huys-vrau</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Met praten, schrijven oft <rhyme label="a" type="f" corresp="#s3:l1">groeten</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Waer met men t herte <rhyme label="b" type="m" corresp="#s3:l2">sau</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Wel trecken ende <rhyme label="c" type="f">beweghen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Schaut loose middelen <rhyme label="d" type="m">quaet</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Wat batet alst niet te <rhyme label="c" type="f" corresp="#s3:l5">deghen</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Recht inden Heer toe <rhyme label="d" type="m" corresp="#s3:l6">gaet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Godt conde wel een <rhyme label="a" type="f">toevoeghen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Adam die in slape <rhyme label="b" type="m">lach</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Ende Isaac wel <rhyme label="a" type="f" corresp="#s4:l1">vernoeghen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Met een die hy niet en <rhyme label="b" type="m" corresp="#s4:l2">sach</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Als Tobias weynich <rhyme label="c" type="f">dochte</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">God voechde hem toe <rhyme label="d" type="m">Sara</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">t'Waer goet dat wy oock <rhyme label="c" type="f" corresp="#s4:l5">sochte</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Voor al een vrome <rhyme label="d" type="m" corresp="#s4:l6">Ga</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Recht haer doch niet en <rhyme label="a" type="f">spoorden</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Nae een rijck ofte jonghe <rhyme label="b" type="m">ghesel</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Maer die van recht toe <rhyme label="a" type="f" corresp="#s5:l1">hoorden</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Hier naer Godes wetten <rhyme label="b" type="m" corresp="#s5:l2">wel</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Volcht nae d'exempel der <rhyme label="c" type="f">vromen</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">t'Best dient ons te volgen <rhyme label="d" type="m">naer</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Soo mach u met recht <rhyme label="c" type="f" corresp="#s5:l5">toecomen</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Een vrome vrau <rhyme label="d" type="m" corresp="#s5:l6">Eerbaer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Laet u doen met <rhyme label="a" type="f">verrucken</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Door Rijckdom ofte schoon <rhyme label="b" type="m">gedaent</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Ick duchte ten sal niet <rhyme label="a" type="f" corresp="#s6:l1">ghelucken</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Soo ghy 't best hadt <rhyme label="b" type="m" corresp="#s6:l2">ghewaent</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Wie dat alsoo <rhyme label="c" type="f">beginnen</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Godt weet hoe dattet <rhyme label="d" type="m">toegaet</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Dus wilt u wel <rhyme label="c" type="f" corresp="#s6:l5">versinnen</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Eer ghy die handen <rhyme label="d" type="m" corresp="#s6:l6">aenslaet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Niet dat ick u wil <rhyme label="a" type="f">raden</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Dat ghy een Vroom <rhyme label="b" type="m">persoon</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Hieromme sout <rhyme label="a" type="f" corresp="#s7:l1">versmaden</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Al is sy rijck oft <rhyme label="b" type="m" corresp="#s7:l2">schoon</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Elck mach hem hier in <rhyme label="c" type="f">beproeven</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Ghy gesellen en Maechden <rhyme label="d" type="m">me</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Op dat doch gheen <rhyme label="c" type="f" corresp="#s7:l5">bedroeven</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">V overcomen voor <rhyme label="d" type="m" corresp="#s7:l6">vre</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Hoe voort de Mannen <rhyme label="a" type="f">hauwen</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Haer sullen inden <rhyme label="b" type="m">graet</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Des echts teghen haer <rhyme label="a" type="f" corresp="#s8:l1">vrauwen</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Vraecht Paulum hier in <rhyme label="b" type="m" corresp="#s8:l2">Raet</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Ghy Gesellen en Maechden <rhyme label="c" type="f">mede</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Ten besten verstaet mijn <rhyme label="d" type="m">Liet</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Voortaen merckt elck mijn <rhyme label="c" type="f" corresp="#s8:l5">reden</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Al tot die Maechden <rhyme label="d" type="m" corresp="#s8:l6">siet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Ghy dochteren <rhyme label="a" type="f">bequame</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Onder Christus <rhyme label="b" type="m">manier</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Aen u lieden te <rhyme label="a" type="f" corresp="#s9:l1">samen</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Soo zijn mijn schriften <rhyme label="b" type="m" corresp="#s9:l2">hier</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Ick wilde u gheerne <rhyme label="c" type="f">sparen</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Ende raden met Paulo <rhyme label="d" type="m">recht</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Cont ghy u reyn <rhyme label="c" type="f" corresp="#s9:l5">bewaren</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Begeeft u niet inde <rhyme label="d" type="m" corresp="#s9:l6">Echt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Die Heer tot Evam <rhyme label="a" type="f">seyde</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Ghy sult met pijn en <rhyme label="b" type="m">smert</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Om dat ghy u man <rhyme label="a" type="f" corresp="#s10:l1">verleyde</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Baren u kinderen <rhyme label="b" type="m" corresp="#s10:l2">hert</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Onder des Mans <rhyme label="c" type="f">subiectij</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Moet u wille zijn dit <rhyme label="d" type="m">versint</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Dus maechden wilt u <rhyme label="c" type="f" corresp="#s10:l5">effectij</rhyme>,</l>
        <l id="s10:l8" met="3" type="-+">Over leggen eer ghyt <rhyme label="d" type="m" corresp="#s10:l6">begint</rhyme>,</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">In die Schrifteur wy <rhyme label="a" type="f">lesen</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Hy doet wel die daer <rhyme label="b" type="m">traut</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Maer t'waer beter <rhyme label="a" type="f" corresp="#s11:l1">ghepresen</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Die hem daer van <rhyme label="b" type="m" corresp="#s11:l2">onthaut</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Niet sondighen die <rhyme label="c" type="f">vromen</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Maechden die trauwen <rhyme label="d" type="m">maer</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">Verdriet int vleesch sal <rhyme label="c" type="f" corresp="#s11:l5">comen</rhyme>,</l>
        <l id="s11:l8" met="3" type="-+">Met meer becommeringhe <rhyme label="d" type="m" corresp="#s11:l6">swaer</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Sijt ghy van Godt <rhyme label="a" type="f">vercooren</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Om te blyven een maecht <rhyme label="b" type="m">eerbaer</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Wilt zijn stemme hier in <rhyme label="a" type="f" corresp="#s12:l1">hooren</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">t Beste dient ons te volgen <rhyme label="b" type="m" corresp="#s12:l2">naer</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">Op dat ghy in den <rhyme label="c" type="f">ghebeden</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Godt looft nacht ende <rhyme label="d" type="m">dach</rhyme>,</l>
        <l id="s12:l7" met="3" type="-+">Ende ghy met uwen <rhyme label="c" type="f" corresp="#s12:l5">Leden</rhyme>,</l>
        <l id="s12:l8" met="3" type="-+">Den Heere dienen <rhyme label="d" type="m" corresp="#s12:l6">mach</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Laet u herte niet met <rhyme label="a" type="f">praten</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Noch door schriften trecken <rhyme label="b" type="m">net</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Maer stelt u altijt <rhyme label="a" type="f" corresp="#s13:l1">ghelaten</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Voor den Heere int <rhyme label="b" type="m" corresp="#s13:l2">ghebet</rhyme>,</l>
        <l id="s13:l5" met="3" type="-+">Hy salt u wel <rhyme label="c" type="f">openbaren</rhyme>,</l>
        <l id="s13:l6" met="3" type="-+">Hoe hy't met u heeft voor <rhyme label="d" type="m">sien</rhyme>,</l>
        <l id="s13:l7" met="3" type="-+">Op dat doch u <rhyme label="c" type="f" corresp="#s13:l5">vergaren</rhyme>,</l>
        <l id="s13:l8" met="3" type="-+">Recht inden heere mach <rhyme label="d" type="m" corresp="#s13:l6">gheschien</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Die heere met bidden en <rhyme label="a" type="f">smeken</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Roept aen inder vreesen <rhyme label="b" type="m">ent</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Ende niet in schoon wel <rhyme label="a" type="f" corresp="#s14:l1">spreken</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">V herten anders <rhyme label="b" type="m" corresp="#s14:l2">went</rhyme>,</l>
        <l id="s14:l5" met="3" type="-+">Soo het God geeft inde <rhyme label="c" type="f">gemeenten</rhyme>,</l>
        <l id="s14:l6" met="3" type="-+">Ende dient tot <rhyme label="d" type="m">salicheyt</rhyme>,</l>
        <l id="s14:l7" met="3" type="-+">Stelt u in als te <rhyme label="c" type="f" corresp="#s14:l5">vreden</rhyme>,</l>
        <l id="s14:l8" met="3" type="-+">In gods wille met <rhyme label="d" type="m" corresp="#s14:l6">gehoorsaemheyt</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Elck neem zijnen roep <rhyme label="a" type="f">waer</rhyme>,</l>
        <l id="s15:l2" met="3" type="-+">Daer u God toe vercooren <rhyme label="b" type="m">heeft</rhyme>,</l>
        <l id="s15:l3" met="3" type="-+">Om te trauwen <rhyme label="a" type="f" corresp="#s15:l1">eerbaer</rhyme>,</l>
        <l id="s15:l4" met="3" type="-+">Ofte Maecht te blyven <rhyme label="b" type="m" corresp="#s15:l2">gheeft</rhyme>,</l>
        <l id="s15:l5" met="3" type="-+">En wilt God nu <rhyme label="c" type="f">bevelen</rhyme>,</l>
        <l id="s15:l6" met="3" type="-+">V saken en bidt hem <rhyme label="d" type="m">stil</rhyme>,</l>
        <l id="s15:l7" met="3" type="-+">Men mach doch niet te <rhyme label="c" type="f" corresp="#s15:l5">vele</rhyme>,</l>
        <l id="s15:l8" met="3" type="-+">Doen des Heeren <rhyme label="d" type="m" corresp="#s15:l6">wil</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="3" type="-+">Och Maechden om <rhyme label="a" type="f">waerschauwen</rhyme>,</l>
        <l id="s16:l2" met="3" type="-+">Schrijf ick uyt liefden <rhyme label="b" type="m">nu</rhyme>,</l>
        <l id="s16:l3" met="3" type="-+">Voor geveynstheyt en <rhyme label="a" type="f" corresp="#s16:l1">flauwen</rhyme>,</l>
        <l id="s16:l4" met="3" type="-+">Wilt neerstich wachten <rhyme label="b" type="m" corresp="#s16:l2">u</rhyme>,</l>
        <l id="s16:l5" met="3" type="-+">Op dat ghy int <rhyme label="c" type="f">aensoecken</rhyme>,</l>
        <l id="s16:l6" met="3" type="-+">Spreeckt uyter herten <rhyme label="d" type="m">fraey</rhyme>,</l>
        <l id="s16:l7" met="3" type="-+">Als vromen ende <rhyme label="c" type="f" corresp="#s16:l5">cloecken</rhyme>,</l>
        <l id="s16:l8" met="3" type="-+">Rebecca en Sara <rhyme label="d" type="m" corresp="#s16:l6">bey</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="3" type="-+">Oorlof hier inne ghy <rhyme label="a" type="f">Maechden</rhyme>,</l>
        <l id="s17:l2" met="3" type="-+">Dit metten herten <rhyme label="b" type="m">singt</rhyme>,</l>
        <l id="s17:l3" met="3" type="-+">Ick woude dattet u <rhyme label="a" type="f" corresp="#s17:l1">behaechde</rhyme>,</l>
        <l id="s17:l4" met="3" type="-+">Dat ghy't in dancke <rhyme label="b" type="m" corresp="#s17:l2">ontfinght</rhyme>,</l>
        <l id="s17:l5" met="3" type="-+">Wat hier noch aen can <rhyme label="c" type="f">resten</rhyme>,</l>
        <l id="s17:l6" met="3" type="-+">Dat wel dient tot u <rhyme label="d" type="m">vermaen</rhyme>,</l>
        <l id="s17:l7" met="3" type="-+">Och haut my dit ten <rhyme label="c" type="f" corresp="#s17:l5">besten</rhyme>,</l>
        <l id="s17:l8" met="3" type="-+">Wt liefden ist <rhyme label="d" type="m" corresp="#s17:l6">ghedaen</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="3" type="-+">Hoe schoon onder Godts <rhyme label="a" type="f">natij</rhyme>,</l>
        <l id="s18:l2" met="3" type="-+">Als Salomon <rhyme label="b" type="m">secht</rhyme>,</l>
        <l id="s18:l3" met="3" type="-+">Een suyvere <rhyme label="a" type="f" corresp="#s18:l1">generatij</rhyme>,</l>
        <l id="s18:l4" met="3" type="-+">Der Liefden is <rhyme label="b" type="m" corresp="#s18:l2">oprecht</rhyme>,</l>
        <l id="s18:l5" met="3" type="-+">Als met Isaac <rhyme label="c" type="f">Rebecca</rhyme>,</l>
        <l id="s18:l6" met="3" type="-+">En Tobias met Sara <rhyme label="d" type="m">voldeucht</rhyme>,</l>
        <l id="s18:l7" met="3" type="-+">Te recht zijn Syrachs <rhyme label="c" type="f" corresp="#s18:l5">reden</rhyme>,</l>
        <l id="s18:l8" met="3" type="-+">Ter werelt niet meerder <rhyme label="d" type="m" corresp="#s18:l6">vreucht</rhyme>,</l>
      </lg>
    </lg>
  </text>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">COmt Heyl'ge GEEST, en Schepper <rhyme label="a" type="m">groot</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Ons Hert met uwen Vinger <rhyme label="b" type="m">raackt</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Met u Ge na de vult den <rhyme label="a" type="m" corresp="#s1:l1">Schoot</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Van ons HEER dien ghy hebt <rhyme label="b" type="m" corresp="#s1:l2">gemaackt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ghy die ons Trooster wordt <rhyme label="a" type="m">genoemt</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">En geestelijcke Salven <rhyme label="b" type="m">goedt</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Een Levende Fonteyn <rhyme label="a" type="m" corresp="#s2:l1">geroemt</rhyme></l>
        <l id="s2:l4" met="4" type="-+">GODTS Gave, Lieffd' en Heyl'ge <rhyme label="b" type="m" corresp="#s2:l2">Bloet</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">GODTS Vinger aan zijn <rhyme label="a" type="m">Rechter-handt</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">In Gaven ghy veel-voudigh <rhyme label="b" type="m">sijt</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Oock 'sVADERS Trouw-ringh ende <rhyme label="a" type="m" corresp="#s3:l1">Pandt</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Met Spraken ghy de Aerd' <rhyme label="b" type="m" corresp="#s3:l2">verblijdt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">In ons Verstand on-steeckt een <rhyme label="a" type="m">licht</rhyme>:</l>
        <l id="s4:l2" met="4" type="-+">V Lieffd' in onse herten <rhyme label="b" type="m">giet</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Ons Licchaam kranck door u <rhyme label="a" type="m" corresp="#s4:l1">Gesicht</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Versterckt, en al-tijdt hulpe <rhyme label="b" type="m" corresp="#s4:l2">biedt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Den VIANDT verre van ons <rhyme label="a" type="m">drijft</rhyme>;</l>
        <l id="s5:l2" met="4" type="-+">V Vrede laat dicht by ons <rhyme label="b" type="m">staan</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">V Leydingh ons te volgen <rhyme label="a" type="m" corresp="#s5:l1">stijft</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Dat wy der Sonden-last <rhyme label="b" type="m" corresp="#s5:l2">ont-gaan</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ons VADER, en SOON kennen <rhyme label="a" type="m">leert</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Der welcker beyder GEEST ghy <rhyme label="b" type="m">sijt</rhyme>.</l>
        <l id="s6:l3" met="4" type="-+">Loff VADER, SOON, u tot ons <rhyme label="a" type="m" corresp="#s6:l1">keert</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Met 'sGEESTES Gaven t'aller <rhyme label="b" type="m" corresp="#s6:l2">tijdt</rhyme>.</l>
      </lg>
    </lg>
  </text>

    <categories>
      <category translation="cycle of life">levenscyclus</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">'t HOuw'lijck is een goede <rhyme label="a" type="m">saeck</rhyme>,</l>
        <l id="s1:l2" met="2" type="+-">Groot <rhyme label="a" type="m" corresp="#s1:l1">vermaeck</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Als een Hemel hier <rhyme label="b" type="f">beneden</rhyme>:</l>
        <l id="s1:l4" met="4" type="+-">Als die twee, die sijn <rhyme label="c" type="m">versaemt</rhyme>,</l>
        <l id="s1:l5" met="2" type="+-">Soo 't <rhyme label="c" type="m" corresp="#s1:l4">betaemt</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Sijn als een, door liefd' en <rhyme label="b" type="f" corresp="#s1:l3">vrede</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Als een Man van goeder <rhyme label="a" type="m">aerdt</rhyme></l>
        <l id="s2:l2" met="2" type="+-">Is <rhyme label="a" type="m" corresp="#s2:l1">gepaert</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Met een Vrou na zijn <rhyme label="b" type="f">behagen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">'t Moet al sware droefheyt <rhyme label="c" type="m">zijn</rhyme>,</l>
        <l id="s2:l5" met="2" type="+-">Groote <rhyme label="c" type="m" corresp="#s2:l4">pijn</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Die sy't' saem niet kunnen <rhyme label="b" type="f" corresp="#s2:l3">dragen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">t' Saem-gevloghten handen <rhyme label="a" type="m">vast</rhyme>,</l>
        <l id="s3:l2" met="2" type="+-">Groote <rhyme label="a" type="m" corresp="#s3:l1">last</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Dragen door een-drachtigh <rhyme label="b" type="f">helpen</rhyme>:</l>
        <l id="s3:l4" met="4" type="+-">t' Saem-gevoeghden herten <rhyme label="c" type="m">trou</rhyme>,</l>
        <l id="s3:l5" met="2" type="+-">Grooten <rhyme label="c" type="m" corresp="#s3:l4">rou</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Door eendrachtigh dragen <rhyme label="b" type="f" corresp="#s3:l3">stelpen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Wee den mensch, 't sy groot of <rhyme label="a" type="m">kleen</rhyme>,</l>
        <l id="s4:l2" met="2" type="+-">Die <rhyme label="a" type="m" corresp="#s4:l1">alleen</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Leeft en sweeft, 't is noyt te <rhyme label="b" type="f">degen</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Maer geluckigh is de <rhyme label="c" type="m">mensch</rhyme>,</l>
        <l id="s4:l5" met="2" type="+-">Die na <rhyme label="c" type="m" corresp="#s4:l4">wensch</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Goet geselschap heeft <rhyme label="b" type="f" corresp="#s4:l3">verkregen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Dit geluck hebt ghy <rhyme label="a" type="m">voorwaer</rhyme></l>
        <l id="s5:l2" met="2" type="+-">Deughdigh <rhyme label="a" type="m" corresp="#s5:l1">paer</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Siet om hoogh het komt van <rhyme label="b" type="f">boven</rhyme>;</l>
        <l id="s5:l4" met="4" type="+-">'t Komt van God <rhyme label="c" type="m">gebenedijt</rhyme>,</l>
        <l id="s5:l5" met="2" type="+-">Wilt <rhyme label="c" type="m" corresp="#s5:l4">altijdt</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Hem met danckbaer herten <rhyme label="b" type="f" corresp="#s5:l3">loven</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Altijt looft en leeft den <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s6:l2" met="2" type="+-">Geeft hem <rhyme label="a" type="m" corresp="#s6:l1">eer</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Hy sal u weerom <rhyme label="b" type="f">vereeren</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Seeg'nen met een milde <rhyme label="c" type="m">handt</rhyme></l>
        <l id="s6:l5" met="2" type="+-">Hier in 't <rhyme label="c" type="m" corresp="#s6:l4">landt</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Beydt' u saet en staet <rhyme label="b" type="f" corresp="#s6:l3">vermeren</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Soo de Heer steets <rhyme label="a" type="m">vreughden-wijn</rhyme></l>
        <l id="s7:l2" met="2" type="+-">Noyt <rhyme label="a" type="m" corresp="#s7:l1">Asijn</rhyme></l>
        <l id="s7:l3" met="4" type="+-">Komt in uwen beecker <rhyme label="b" type="f">gieten</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Denckt dat sijn <rhyme label="c" type="m">Maiesteyt</rhyme></l>
        <l id="s7:l5" met="2" type="+-">
          <rhyme label="c" type="m" corresp="#s7:l4">Danckbaerheydt</rhyme>
        </l>
        <l id="s7:l6" met="4" type="+-">Voor die weldaet wil <rhyme label="b" type="f" corresp="#s7:l3">genieten</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Soo hy oock u sendet t' <rhyme label="a" type="m">huys</rhyme></l>
        <l id="s8:l2" met="2" type="+-">'t Bitter <rhyme label="a" type="m" corresp="#s8:l1">kruys</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Weest niet al te seer <rhyme label="b" type="f">verslaghen</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Denckt dat sulcx u Vader <rhyme label="c" type="m">goet</rhyme></l>
        <l id="s8:l5" met="2" type="+-">Wijss'lijck <rhyme label="c" type="m" corresp="#s8:l4">doet</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Weest gerust in sijn <rhyme label="b" type="f" corresp="#s8:l3">behagen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Wilt dit paer doch veel <rhyme label="a" type="m">gelucx</rhyme>,</l>
        <l id="s9:l2" met="2" type="+-">Weynigh <rhyme label="a" type="m" corresp="#s9:l1">drucx</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">(Soo 't kan saligh zijn) Heer <rhyme label="b" type="f">geven</rhyme>!</l>
        <l id="s9:l4" met="4" type="+-">Maer voor al geeft ons en <rhyme label="c" type="m">haer</rhyme></l>
        <l id="s9:l5" met="2" type="+-">Heer hier <rhyme label="c" type="m" corresp="#s9:l4">naer</rhyme></l>
        <l id="s9:l6" met="4" type="+-">Vyt genaed' het eeuwigh <rhyme label="b" type="f" corresp="#s9:l3">leven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

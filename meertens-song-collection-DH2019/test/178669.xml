  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">MEn looft in Sion met <rhyme label="a" type="f">gezangen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">In stilheit, u, ô <rhyme label="b" type="m">Godt</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">'t Beloofde zult gy daar <rhyme label="a" type="f" corresp="#s1:l1">ontfangen</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Naar eisch van uw <rhyme label="b" type="m" corresp="#s1:l2">gebodt</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Elk zal 't gewillig u <rhyme label="c" type="f">betaalen</rhyme>;</l>
        <l id="s1:l6" met="3" type="-+">Gy hoort, ô Heer, 't <rhyme label="d" type="m">gebedt</rhyme>.</l>
        <l id="s1:l7" met="4" type="-+">Dies komt al 't vleesch, geneigt te <rhyme label="c" type="f" corresp="#s1:l5">dwaalen</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Tot u en uwe <rhyme label="d" type="m" corresp="#s1:l6">wet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Veel magtige <rhyme label="a" type="f">ongerechtigheden</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Verkregen <rhyme label="b" type="m">d'overhandt</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Op my: maar gy verzoent op <rhyme label="a" type="f" corresp="#s2:l1">heden</rhyme></l>
        <l id="s2:l4" met="3" type="-+">'t Quaat dat ons hadt <rhyme label="b" type="m" corresp="#s2:l2">vermant</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">Welzalig hy, dien gy doet <rhyme label="c" type="f">naadren</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Verkoren ten <rhyme label="d" type="m">altaar</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Die in uw' voorhof mag <rhyme label="c" type="f" corresp="#s2:l5">vergaadren</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">En woonen jaar op <rhyme label="d" type="m" corresp="#s2:l6">jaar</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Wy worden met het goedt <rhyme label="a" type="f">verzadigt</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Van 't heilige <rhyme label="b" type="m">paleis</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Uw huis; van waar gy ons <rhyme label="a" type="f" corresp="#s3:l1">verdadigt</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En heil schenkt reis op <rhyme label="b" type="m" corresp="#s3:l2">reis</rhyme>.</l>
        <l id="s3:l5" met="4" type="-+">Gy sult ons vreesselyke <rhyme label="c" type="f">dingen</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Antwoorden met <rhyme label="d" type="m">bescheit</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Godt onzes heils, wiens lof wy <rhyme label="c" type="f" corresp="#s3:l5">zingen</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">In uw <rhyme label="d" type="m" corresp="#s3:l6">gerechtigheit</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">O gy vertrouwen aller <rhyme label="a" type="f">enden</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Der aarde, en die aan <rhyme label="b" type="m">zee</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Ver zyn gelegen: kom u <rhyme label="a" type="f" corresp="#s4:l1">wenden</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Tot ons, naar onze <rhyme label="b" type="m" corresp="#s4:l2">beê</rhyme>.</l>
        <l id="s4:l5" met="4" type="-+">Die door zyn kracht de hooge <rhyme label="c" type="f">bergen</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Vast zet, met magt <rhyme label="d" type="m">omgordt</rhyme>:</l>
        <l id="s4:l7" met="4" type="-+">Ook al wat hem bestaat te <rhyme label="c" type="f" corresp="#s4:l5">tergen</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Ten gronde <rhyme label="d" type="m" corresp="#s4:l6">nederstort</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Die 't woedend bulderen en <rhyme label="a" type="f">bruischen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Der zee stilt, en 't <rhyme label="b" type="m">rumoer</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Van hare golven; ook het <rhyme label="a" type="f" corresp="#s5:l1">druischen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Der volken, gansch in <rhyme label="b" type="m" corresp="#s5:l2">roer</rhyme>.</l>
        <l id="s5:l5" met="4" type="-+">Zy, die aan 't end der aarde <rhyme label="c" type="f">woonen</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Zyn met ontzagh <rhyme label="d" type="m">bevreest</rhyme></l>
        <l id="s5:l7" met="4" type="-+">Voor uwe tekenen; en <rhyme label="c" type="f" corresp="#s5:l5">toonen</rhyme></l>
        <l id="s5:l8" met="3" type="-+">U eerbied in den <rhyme label="d" type="m" corresp="#s5:l6">geest</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Gy doet den uitgang van den <rhyme label="a" type="f">morgen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">En van den <rhyme label="b" type="m">avondtstondt</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Steedts juichen: 't landt komt gy <rhyme label="a" type="f" corresp="#s6:l1">bezorgen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Naar 't woordt van uw <rhyme label="b" type="m" corresp="#s6:l2">verbondt</rhyme>.</l>
        <l id="s6:l5" met="4" type="-+">En als gy 't hebt gemaakt <rhyme label="c" type="f">begeerig</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Naar uwen zegen, <rhyme label="d" type="m">Heer</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Verrykt gy 't, die nooit zyt <rhyme label="c" type="f" corresp="#s6:l5">afkeerig</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Van weldoen, meer en <rhyme label="d" type="m" corresp="#s6:l6">meer</rhyme>:</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Ja gy bespoelt het <rhyme label="a" type="f">overvloedig</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Met uwen landtstroom, <rhyme label="b" type="m">vol</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Van water, en bereidt dus <rhyme label="a" type="f" corresp="#s7:l1">spoedig</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Hun koren, vlas en <rhyme label="b" type="m" corresp="#s7:l2">wol</rhyme>.</l>
        <l id="s7:l5" met="4" type="-+">Gy maakt zyne opgeploegde <rhyme label="c" type="f">landen</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Als dronken door den <rhyme label="d" type="m">stroom</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">De vooren, die van droogte <rhyme label="c" type="f" corresp="#s7:l5">branden</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Vult gy tot aan den <rhyme label="d" type="m" corresp="#s7:l6">zoom</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Gy maakt het aardryk door den <rhyme label="a" type="f">regen</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Gansch week, tot <rhyme label="b" type="m">vruchtbaarheit</rhyme>:</l>
        <l id="s8:l3" met="4" type="-+">'t Uitspruitzel rypt door uwen <rhyme label="a" type="f" corresp="#s8:l1">zegen</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Dien gy 'er voor <rhyme label="b" type="m" corresp="#s8:l2">bereidt</rhyme>.</l>
        <l id="s8:l5" met="4" type="-+">'t Jaar uwer goedheit komt gy <rhyme label="c" type="f">kroonen</rhyme>;</l>
        <l id="s8:l6" met="3" type="-+">De vettigheit druipt <rhyme label="d" type="m">neêr</rhyme></l>
        <l id="s8:l7" met="4" type="-+">Daar uwe spooren zich <rhyme label="c" type="f" corresp="#s8:l5">vertoonen</rhyme>;</l>
        <l id="s8:l8" met="3" type="-+">Opdat elk u <rhyme label="d" type="m" corresp="#s8:l6">vereer'</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Zy druipen op de <rhyme label="a" type="f">woestenyen</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Daar 't weilandt vruchtbaar <rhyme label="b" type="m">wordt</rhyme>:</l>
        <l id="s9:l3" met="4" type="-+">De heuvels zietmen zich <rhyme label="a" type="f" corresp="#s9:l1">verblyën</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Zy zyn met vreugde <rhyme label="b" type="m" corresp="#s9:l2">omgordt</rhyme>.</l>
        <l id="s9:l5" met="4" type="-+">De velden zyn bekleedt met <rhyme label="c" type="f">kudden</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">De dalen zyn <rhyme label="d" type="m">bedekt</rhyme></l>
        <l id="s9:l7" met="4" type="-+">Met koren, dat, door 't weelig <rhyme label="c" type="f" corresp="#s9:l5">schudden</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Zang en gejuich <rhyme label="d" type="m" corresp="#s9:l6">verwekt</rhyme>.</l>
      </lg>
    </lg>
  </text>

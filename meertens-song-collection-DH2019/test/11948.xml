    <melody>Treed rasjes mijn voetjes</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">GHy voedt de <rhyme label="a" type="f">misdaden</rhyme>,</l>
        <l id="s1:l2" met="2" type="-+">Soo gy de <rhyme label="a" type="f" corresp="#s1:l1">quaden</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">Die God <rhyme label="a" type="f" corresp="#s1:l1">versmaden</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Ooghluycking <rhyme label="b" type="m">doet</rhyme>.</l>
        <l id="s1:l5" met="2" type="-+">Want u <rhyme label="b" type="m" corresp="#s1:l4">ghemoet</rhyme></l>
        <l id="s1:l6" met="2" type="-+">De sonden als <rhyme label="b" type="m" corresp="#s1:l4">goet</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Te achten schijnt; nae <rhyme label="c" type="m">dien</rhyme></l>
        <l id="s1:l8" met="4" type="-+">Ghy anders 't quade soudt <rhyme label="c" type="m" corresp="#s1:l7">verbien</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Spaert ghy het <rhyme label="a" type="f">kastijden</rhyme></l>
        <l id="s2:l2" met="2" type="-+">Ter rechter <rhyme label="a" type="f" corresp="#s2:l1">tijden</rhyme>;</l>
        <l id="s2:l3" met="2" type="-+">Men sal <rhyme label="a" type="f" corresp="#s2:l1">belijden</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">Dat ghy 't quaet <rhyme label="b" type="m">stijft</rhyme>;</l>
        <l id="s2:l5" met="2" type="-+">Jae selfs <rhyme label="b" type="m" corresp="#s2:l4">bedrijft</rhyme>,</l>
        <l id="s2:l6" met="2" type="-+">Soo aen u <rhyme label="b" type="m" corresp="#s2:l4">verblijft</rhyme></l>
        <l id="s2:l7" met="3" type="-+">De macht; om in 't <rhyme label="c" type="m">ghemeen</rhyme></l>
        <l id="s2:l8" met="4" type="-+">Te straffen, die Gods Wet <rhyme label="c" type="m" corresp="#s2:l7">vertre'en</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">De Heere sal <rhyme label="a" type="f">plaghen</rhyme></l>
        <l id="s3:l2" met="2" type="-+">Met sware <rhyme label="a" type="f" corresp="#s3:l1">slaghen</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Die 't quaet <rhyme label="a" type="f" corresp="#s3:l1">verdraghen</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">Wanneer 't <rhyme label="b" type="m">gheschiet</rhyme>.</l>
        <l id="s3:l5" met="2" type="-+">Al wie dat <rhyme label="b" type="m" corresp="#s3:l4">niet</rhyme></l>
        <l id="s3:l6" met="2" type="-+">Afkeerigh <rhyme label="b" type="m" corresp="#s3:l4">aensiet</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Het quaet, dat ymant <rhyme label="c" type="m">doet</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">Gheeft tot de sond een vaste <rhyme label="c" type="m" corresp="#s3:l7">voet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Die anderen <rhyme label="a" type="f">gheven</rhyme></l>
        <l id="s4:l2" met="2" type="-+">Tot 't sondigh <rhyme label="a" type="f" corresp="#s4:l1">leven</rhyme></l>
        <l id="s4:l3" met="2" type="-+">Quae raet, die <rhyme label="a" type="f" corresp="#s4:l1">even</rhyme></l>
        <l id="s4:l4" met="2" type="-+">Als die 't <rhyme label="b" type="m">begaet</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Selfs op sigh <rhyme label="b" type="m" corresp="#s4:l4">laet</rhyme></l>
        <l id="s4:l6" met="2" type="-+">Gods gramschap en <rhyme label="b" type="m" corresp="#s4:l4">haet</rhyme>.</l>
        <l id="s4:l7" met="3" type="-+">Want hy een sno wil <rhyme label="c" type="m">heeft</rhyme>.</l>
        <l id="s4:l8" met="4" type="-+">Die and're 't quaet in 't herte <rhyme label="c" type="m" corresp="#s4:l7">gheeft</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Die mede 't quaet <rhyme label="a" type="f">stijven</rhyme></l>
        <l id="s5:l2" met="2" type="-+">Door haer <rhyme label="a" type="f" corresp="#s5:l1">bedrijven</rhyme>,</l>
        <l id="s5:l3" met="2" type="-+">Oock aen haer <rhyme label="a" type="f" corresp="#s5:l1">wrijven</rhyme></l>
        <l id="s5:l4" met="2" type="-+">Des naestens <rhyme label="b" type="m">sond</rhyme>.</l>
        <l id="s5:l5" met="2" type="-+">Het quaet vat <rhyme label="b" type="m" corresp="#s5:l4">grond</rhyme>,</l>
        <l id="s5:l6" met="2" type="-+">Wanneer dat het <rhyme label="b" type="m" corresp="#s5:l4">vond</rhyme></l>
        <l id="s5:l7" met="3" type="-+">De hulp van die men <rhyme label="c" type="m">acht</rhyme></l>
        <l id="s5:l8" met="4" type="-+">Dat 's Heeren wil en Wet <rhyme label="c" type="m" corresp="#s5:l7">betracht</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">De sonden te <rhyme label="a" type="f">prijsen</rhyme>,</l>
        <l id="s6:l2" met="2" type="-+">Is klaer <rhyme label="a" type="f" corresp="#s6:l1">bewijsen</rhyme>,</l>
        <l id="s6:l3" met="2" type="-+">Dat gheen <rhyme label="a" type="f" corresp="#s6:l1">afgrijsen</rhyme></l>
        <l id="s6:l4" met="2" type="-+">Men heeft van 't <rhyme label="b" type="m">quaet</rhyme></l>
        <l id="s6:l5" met="2" type="-+">Dat een <rhyme label="b" type="m" corresp="#s6:l4">begaet</rhyme></l>
        <l id="s6:l6" met="2" type="-+">Met woorden of <rhyme label="b" type="m" corresp="#s6:l4">daet</rhyme>.</l>
        <l id="s6:l7" met="3" type="-+">Maer dat men is <rhyme label="c" type="m">gheneyght</rhyme></l>
        <l id="s6:l8" met="4" type="-+">Tot 't gheene, daer Godt straff op <rhyme label="c" type="m" corresp="#s6:l7">dreyght</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="2" type="-+">Het goede <rhyme label="a" type="f">verdoemen</rhyme>,</l>
        <l id="s7:l2" met="2" type="-+">'t Quaet te <rhyme label="a" type="f" corresp="#s7:l1">verbloemen</rhyme>,</l>
        <l id="s7:l3" met="2" type="-+">Gods straff vre'e <rhyme label="a" type="f" corresp="#s7:l1">noemen</rhyme>,</l>
        <l id="s7:l4" met="2" type="-+">Geeft sonden <rhyme label="b" type="m">ste'e</rhyme>.</l>
        <l id="s7:l5" met="2" type="-+">En wie dit <rhyme label="b" type="m" corresp="#s7:l4">de'e</rhyme>,</l>
        <l id="s7:l6" met="2" type="-+">Sal treffen het <rhyme label="b" type="m" corresp="#s7:l4">wee</rhyme>.</l>
        <l id="s7:l7" met="3" type="-+">Dewijl de Heer <rhyme label="c" type="m">verdoemt</rhyme></l>
        <l id="s7:l8" met="4" type="-+">Die 't goede quaet, en 't quaet goet <rhyme label="c" type="m" corresp="#s7:l7">noemt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="2" type="-+">Wilt ghy dan niet <rhyme label="a" type="f">halen</rhyme></l>
        <l id="s8:l2" met="2" type="-+">Op u de <rhyme label="a" type="f" corresp="#s8:l1">qualen</rhyme>,</l>
        <l id="s8:l3" met="2" type="-+">Welck Godt die <rhyme label="a" type="f" corresp="#s8:l1">dwalen</rhyme></l>
        <l id="s8:l4" met="2" type="-+">Van 't padt <rhyme label="b" type="m">toe-leyt</rhyme>;</l>
        <l id="s8:l5" met="2" type="-+">Tot <rhyme label="b" type="m" corresp="#s8:l4">heyligheyt</rhyme></l>
        <l id="s8:l6" met="2" type="-+">U selven <rhyme label="b" type="m" corresp="#s8:l4">bereydt</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">En straft met ernst de <rhyme label="c" type="m">gheen</rhyme>,</l>
        <l id="s8:l8" met="4" type="-+">Die van het padt der deught <rhyme label="c" type="m" corresp="#s8:l7">aftre'en</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

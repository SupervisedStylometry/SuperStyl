  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">WIlt my uwe Volheit <rhyme label="a" type="f">geeven</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Jesus, ziet, Ik heb <rhyme label="b" type="m">niet</rhyme>.</l>
        <l id="s1:l3" met="4" type="+-">Kunt Gy 't aanzien, ô myn <rhyme label="a" type="f" corresp="#s1:l1">Leeven</rhyme>!</l>
        <l id="s1:l4" met="4" type="+-">Ach wierd dog myn Geest <rhyme label="c" type="f">ontbonden</rhyme>,</l>
        <l id="s1:l5" met="2" type="+-">Van de <rhyme label="c" type="f" corresp="#s1:l4">Zonden</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Gy zyt licht, en ik ben <rhyme label="a" type="f">duister</rhyme>;</l>
        <l id="s2:l2" met="4" type="+-">Gy zyt rein, ik <rhyme label="b" type="m">gemein</rhyme>;</l>
        <l id="s2:l3" met="4" type="+-">Ik ben zwak, Gy kracht en <rhyme label="a" type="f" corresp="#s2:l1">luister</rhyme>.</l>
        <l id="s2:l4" met="4" type="+-">O Verlosser van de <rhyme label="c" type="f">zonden</rhyme>!</l>
        <l id="s2:l5" met="2" type="+-">Laat U <rhyme label="c" type="f" corresp="#s2:l4">vinden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Zou myn Heiland my niet <rhyme label="a" type="f">heelen</rhyme>!</l>
        <l id="s3:l2" met="4" type="+-">Hoe? hing Hy, dan om <rhyme label="b" type="m">my</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Aan het kruis vergeefs vol <rhyme label="a" type="f" corresp="#s3:l1">builen</rhyme>?</l>
        <l id="s3:l4" met="4" type="+-">Zoud' ik in den dood steeds <rhyme label="c" type="f">sweeven</rhyme>,</l>
        <l id="s3:l5" met="2" type="+-">By het <rhyme label="c" type="f" corresp="#s3:l4">leeven</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Ey, de Liefde moet dog <rhyme label="a" type="f">lieven</rhyme>.</l>
        <l id="s4:l2" met="4" type="+-">Zou zy dan, daar zy <rhyme label="b" type="m">kan</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Myn verstorve Ziel niet <rhyme label="a" type="f" corresp="#s4:l1">grieven</rhyme>?</l>
        <l id="s4:l4" met="4" type="+-">Nu zy zal dog ook des <rhyme label="c" type="f">Armen</rhyme></l>
        <l id="s4:l5" met="2" type="+-">Zich <rhyme label="c" type="f" corresp="#s4:l4">erbarmen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Maar, ô! waarom duurt het <rhyme label="a" type="f">lange</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Eer uw spoed hulpe <rhyme label="b" type="m">doet</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Spoed u, anders is my <rhyme label="a" type="f" corresp="#s5:l1">bange</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Dat de dood my <rhyme label="c" type="f">overyle</rhyme>,</l>
        <l id="s5:l5" met="2" type="+-">By 't <rhyme label="c" type="f" corresp="#s5:l4">verwylen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Nog is niet myn uur <rhyme label="a" type="f">gekomen</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Lievet my, buige <rhyme label="b" type="m">dy</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Tot ik u heb <rhyme label="a" type="f" corresp="#s6:l1">aangenomen</rhyme>;</l>
        <l id="s6:l4" met="4" type="+-">Ik zal u gewis <rhyme label="c" type="f">bevryen</rhyme>,</l>
        <l id="s6:l5" met="2" type="+-">En <rhyme label="c" type="f" corresp="#s6:l4">verblyen</rhyme>.</l>
      </lg>
    </lg>
  </text>

    <melody>Allein zu dir Herr Jesu Christ</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Op u O Jhesu Christe <rhyme label="a" type="m">alleyn</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Staet mijn hope ter <rhyme label="b" type="f">eerden</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Ghy zijt mijn Trooster dat weet ic <rhyme label="a" type="m" corresp="#s1:l1">certeyn</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Anders gheen troost helpt my van <rhyme label="b" type="f" corresp="#s1:l2">weerden</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">Gheen ander en was hier oyt <rhyme label="c" type="m">vercoren</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Ter aerden en is gheen mensch <rhyme label="c" type="m" corresp="#s1:l5">gheboren</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Die my wt nooden helpen <rhyme label="d" type="m">can</rhyme>,</l>
        <l id="s1:l8" met="2" type="-+">Dies roep ick u <rhyme label="d" type="m" corresp="#s1:l7">an</rhyme>,</l>
        <l id="s1:l9" met="4" type="-+">Alleen op u, Staet mijn betrouwen <rhyme label="e" type="m">nu</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Mijn sonden syn swaer in dit <rhyme label="a" type="m">ghecrijt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En rouwen my van <rhyme label="b" type="f">herten</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Wilt my van desen maken <rhyme label="a" type="m" corresp="#s2:l1">quijt</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Door uwen doot en <rhyme label="b" type="f" corresp="#s2:l2">smerten</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">En toocht my dijnen Vader <rhyme label="c" type="m">zaen</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Dat ghy voor my hier hebt <rhyme label="c" type="m" corresp="#s2:l5">voldaen</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">So werd ick mijner sonden <rhyme label="d" type="m">ontlast</rhyme>,</l>
        <l id="s2:l8" met="2" type="-+">Heere hout my <rhyme label="d" type="m" corresp="#s2:l7">vast</rhyme>,</l>
        <l id="s2:l9" met="4" type="-+">Also ghy my, belouet <rhyme label="e" type="m">vry</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Gheeft my nae dijne <rhyme label="a" type="m">bermherticheyt</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Dat rechte Christen <rhyme label="b" type="f">betrouwen</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Op dat ick hier dijn <rhyme label="a" type="m" corresp="#s3:l1">soeticheyt</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Oprechtlijck mach <rhyme label="b" type="f" corresp="#s3:l2">beschouwen</rhyme>:</l>
        <l id="s3:l5" met="4" type="-+">Voor allen dinghen beminnen <rhyme label="c" type="m">dy</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">En mijnen naesten, ghelijck als  <rhyme label="c" type="m" corresp="#s3:l5">my</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Seynt my u hulpe in den <rhyme label="d" type="m">eynt</rhyme>,</l>
        <l id="s3:l8" met="2" type="-+">Tot my u <rhyme label="d" type="m" corresp="#s3:l7">weynt</rhyme>,</l>
        <l id="s3:l9" met="4" type="-+">Des duyuels list, breeckt, ende <rhyme label="e" type="m">twist</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Eere sy Godt in den hoochsten <rhyme label="a" type="m">Throon</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Den Vader van allen <rhyme label="b" type="f">goede</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">En Jhesum Christum synen <rhyme label="a" type="m" corresp="#s4:l1">Soon</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Die ons altijt <rhyme label="b" type="f" corresp="#s4:l2">behoede</rhyme>.</l>
        <l id="s4:l5" met="4" type="-+">En Godt den heylighen Gheest <rhyme label="c" type="m">claer</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Die ons syn hulpe gheue <rhyme label="c" type="m" corresp="#s4:l5">eenpaer</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Op dat wy u behaghen <rhyme label="d" type="m">reyn</rhyme>,</l>
        <l id="s4:l8" met="2" type="-+">Hier int aertsche <rhyme label="d" type="m" corresp="#s4:l7">pleyn</rhyme>,</l>
        <l id="s4:l9" met="4" type="-+">En volghen bet, in eewicheyt <rhyme label="e" type="m">net</rhyme>.</l>
      </lg>
    </lg>
  </text>

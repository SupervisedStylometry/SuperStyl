    <melody>Ik lijd in het hart pijn ongewoon</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="1" type="-+">'T Is <rhyme label="a" type="m">eer</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Te volgen Godt sijn <rhyme label="a" type="m" corresp="#s1:l1">Heer</rhyme>.</l>
        <l id="s1:l3" met="2" type="-+">En die niet <rhyme label="b" type="f">trouwen</rhyme>;</l>
        <l id="s1:l4" met="2" type="-+">Haer zuyver <rhyme label="b" type="f" corresp="#s1:l3">houwen</rhyme></l>
        <l id="s1:l5" met="6" type="-+">Sullen 't Lam volgen na 's Hemels <rhyme label="b" type="f" corresp="#s1:l3">lantsdouwen</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Singen 't liet dan geen <rhyme label="c" type="m">Man</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Noch Weduw zingen <rhyme label="c" type="m" corresp="#s1:l6">kan</rhyme>,</l>
        <l id="s1:l8" met="2" type="-+">Veel min de <rhyme label="b" type="f" corresp="#s1:l3">Vrouwen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="1" type="-+">Dit <rhyme label="a" type="m">haeght</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Soo Geertruyt Godes <rhyme label="a" type="m" corresp="#s2:l1">Maeght</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Dat sy haer <rhyme label="b" type="f">leden</rhyme></l>
        <l id="s2:l4" met="2" type="-+">Heeft al <rhyme label="b" type="f" corresp="#s2:l3">besneden</rhyme>.</l>
        <l id="s2:l5" met="6" type="-+">Van haer jeught heeft Christus paden <rhyme label="b" type="f" corresp="#s2:l3">betrede</rhyme>.</l>
        <l id="s2:l6" met="3" type="-+">Al 's werelts pracht en <rhyme label="c" type="m">goet</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">'t Vermaeck, en edel <rhyme label="c" type="m" corresp="#s2:l6">bloedt</rhyme></l>
        <l id="s2:l8" met="2" type="-+">Verfoeyt zy <rhyme label="b" type="f" corresp="#s2:l3">mede</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="1" type="-+">Een <rhyme label="a" type="m">Prins</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Wiens gelijcke <rhyme label="a" type="m" corresp="#s3:l1">geenzins</rhyme></l>
        <l id="s3:l3" met="2" type="-+">Wasser te <rhyme label="b" type="f">vinden</rhyme>.</l>
        <l id="s3:l4" met="2" type="-+">Cupidoos <rhyme label="b" type="f" corresp="#s3:l3">blinde</rhyme></l>
        <l id="s3:l5" met="6" type="-+">Socht Sint Geertruyt aen 't Echte juck te <rhyme label="b" type="f" corresp="#s3:l3">binde</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">De Coninh <rhyme label="c" type="m">Dagobert</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Met hare Vader 't <rhyme label="c" type="m" corresp="#s3:l6">hert</rhyme></l>
        <l id="s3:l8" met="2" type="-+">Sochten 't en <rhyme label="b" type="f" corresp="#s3:l3">Vrinden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="1" type="-+">Sy <rhyme label="a" type="m">spreeckt</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Geen wijsheyt haer <rhyme label="a" type="m" corresp="#s4:l1">ontbreeckt</rhyme>:</l>
        <l id="s4:l3" met="2" type="-+">Roock zijn de <rhyme label="b" type="f">staten</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">Windt is uw' <rhyme label="b" type="f" corresp="#s4:l3">praten</rhyme>;</l>
        <l id="s4:l5" met="6" type="-+">'k Sal Christus mijn Bruydegom niet <rhyme label="b" type="f" corresp="#s4:l3">verlaten</rhyme>:</l>
        <l id="s4:l6" met="3" type="-+">Mijn Lief besluyt het <rhyme label="c" type="m">al</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Sijn goedt is sonder <rhyme label="c" type="m" corresp="#s4:l6">val</rhyme>.</l>
        <l id="s4:l8" met="2" type="-+">'t Werelts ick <rhyme label="b" type="f" corresp="#s4:l3">hate</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="1" type="-+">Dit <rhyme label="a" type="m">Lam</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Ontloopt haer Vader <rhyme label="a" type="m" corresp="#s5:l1">gram</rhyme>,</l>
        <l id="s5:l3" met="2" type="-+">Al Conincx <rhyme label="b" type="f">lagen</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">Haer Vryers <rhyme label="b" type="f" corresp="#s5:l3">plagen</rhyme>.</l>
        <l id="s5:l5" met="6" type="-+">In Vranckrijck blijft na haers Moeders <rhyme label="b" type="f" corresp="#s5:l3">behagen</rhyme>.</l>
        <l id="s5:l6" met="3" type="-+">De doodt de Prins <rhyme label="c" type="m">aentast</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">En haer Vader <rhyme label="c" type="m" corresp="#s5:l6">verrast</rhyme></l>
        <l id="s5:l8" met="2" type="-+">Na korte <rhyme label="b" type="f" corresp="#s5:l3">dagen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="1" type="-+">Als <rhyme label="a" type="m">zy</rhyme></l>
        <l id="s6:l2" met="3" type="-+">En hare Moeder <rhyme label="a" type="m" corresp="#s6:l1">vry</rhyme></l>
        <l id="s6:l3" met="2" type="-+">Waren van 't <rhyme label="b" type="f">quellen</rhyme>;</l>
        <l id="s6:l4" met="2" type="-+">Haer huys t' <rhyme label="b" type="f" corresp="#s6:l3">Nivellen</rhyme></l>
        <l id="s6:l5" met="6" type="-+">Tot een maeghden Klooster maken, en <rhyme label="b" type="f" corresp="#s6:l3">stellen</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Sint Geert verkooren <rhyme label="c" type="m">is</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Voor Moeder en <rhyme label="c" type="m" corresp="#s6:l6">Abdis</rhyme></l>
        <l id="s6:l8" met="2" type="-+">Van haer <rhyme label="b" type="f" corresp="#s6:l3">gezelle</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="1" type="-+">Sy <rhyme label="a" type="m">Licht</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Sy leert, sy yder <rhyme label="a" type="m" corresp="#s7:l1">sticht</rhyme>;</l>
        <l id="s7:l3" met="2" type="-+">De zonde <rhyme label="b" type="f">mijden</rhyme>,</l>
        <l id="s7:l4" met="2" type="-+">Haer vleesch <rhyme label="b" type="f" corresp="#s7:l3">castijden</rhyme>,</l>
        <l id="s7:l5" met="6" type="-+">De siecken vertroost, de Pelgrims <rhyme label="b" type="f" corresp="#s7:l3">verblijden</rhyme>:</l>
        <l id="s7:l6" met="3" type="-+">Sy Godt in alles <rhyme label="c" type="m">looft</rhyme>.</l>
        <l id="s7:l7" met="3" type="-+">'t Hemels vyer op haer <rhyme label="c" type="m" corresp="#s7:l6">hooft</rhyme></l>
        <l id="s7:l8" met="2" type="-+">Rust eenigh <rhyme label="b" type="f" corresp="#s7:l3">tijden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="1" type="-+">De <rhyme label="a" type="m">zee</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Gebiedt, zee-monsters <rhyme label="a" type="m" corresp="#s8:l1">mee</rhyme>.</l>
        <l id="s8:l3" met="2" type="-+">Als Ultaen <rhyme label="b" type="f">zeyde</rhyme>,</l>
        <l id="s8:l4" met="2" type="-+">Dat sy souw <rhyme label="b" type="f" corresp="#s8:l3">scheyde</rhyme>,</l>
        <l id="s8:l5" met="6" type="-+">Met de meeste blijdtschap de doodt <rhyme label="b" type="f" corresp="#s8:l3">verbeyde</rhyme>.</l>
        <l id="s8:l6" met="3" type="-+">Een soet <rhyme label="c" type="m">Engelen-choor</rhyme></l>
        <l id="s8:l7" met="3" type="-+">Leyden Geertrudis in 't <rhyme label="c" type="m" corresp="#s8:l6">spoor</rhyme></l>
        <l id="s8:l8" met="2" type="-+">Van 's Hemels <rhyme label="b" type="f" corresp="#s8:l3">weyden</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="1" type="-+">Buyght <rhyme label="a" type="m">niet</rhyme></l>
        <l id="s9:l2" met="3" type="-+">(Als na de windt het <rhyme label="a" type="m" corresp="#s9:l1">riet</rhyme>)</l>
        <l id="s9:l3" met="2" type="-+">Na die u <rhyme label="b" type="f">raden</rhyme>:</l>
        <l id="s9:l4" met="2" type="-+">Draeft 's wereldts <rhyme label="b" type="f" corresp="#s9:l3">paden</rhyme>.</l>
        <l id="s9:l5" met="6" type="-+">Godt blijft by u, vervolgen u de <rhyme label="b" type="f" corresp="#s9:l3">quaden</rhyme>.</l>
        <l id="s9:l6" met="3" type="-+">Godts wil noyt <rhyme label="c" type="m">tegen-staet</rhyme>.</l>
        <l id="s9:l7" met="3" type="-+">In deughden al voort <rhyme label="c" type="m" corresp="#s9:l6">gaet</rhyme>.</l>
        <l id="s9:l8" met="2" type="-+">Wilt quaet <rhyme label="b" type="f" corresp="#s9:l3">versmaden</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="1" type="-+">O <rhyme label="a" type="m">maeght</rhyme>!</l>
        <l id="s10:l2" met="3" type="-+">En Abdis Geertruyt <rhyme label="a" type="m" corresp="#s10:l1">jaeght</rhyme>,</l>
        <l id="s10:l3" met="2" type="-+">Door uw' <rhyme label="b" type="f">gebeden</rhyme>,</l>
        <l id="s10:l4" met="2" type="-+">Van 't Landt en <rhyme label="b" type="f" corresp="#s10:l3">Steden</rhyme></l>
        <l id="s10:l5" met="6" type="-+">Rotten en Muyzen, met al dat breeckt <rhyme label="b" type="f" corresp="#s10:l3">vreden</rhyme>.</l>
        <l id="s10:l6" met="3" type="-+">Verdrijft van 't minst tot 't <rhyme label="c" type="m">meest</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Dat schadight onse <rhyme label="c" type="m" corresp="#s10:l6">geest</rhyme>,</l>
        <l id="s10:l8" met="2" type="-+">En 't lichaem <rhyme label="b" type="f" corresp="#s10:l3">mede</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

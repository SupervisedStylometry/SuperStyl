  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Christus, gy zyt dag en <rhyme label="a" type="m">licht</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Niets is bedekt voor uw <rhyme label="a" type="m" corresp="#s1:l1">gezicht</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Uw Evangeliwoordt en <rhyme label="b" type="m">Geest</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Verlichten ons in 't minst en <rhyme label="b" type="m" corresp="#s1:l3">meest</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wy bidden dat uw <rhyme label="a" type="m">hemelwacht</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Ons wil behoeden dezen <rhyme label="a" type="m" corresp="#s2:l1">nacht</rhyme>;</l>
        <l id="s2:l3" met="4" type="-+">Bewaar ons, Heer, voor alle <rhyme label="b" type="m">quaadt</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Naar uwe liefde en wyzen <rhyme label="b" type="m" corresp="#s2:l3">raadt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Verdryf den zwaaren slaap, ô <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Dat 's vyandts list ons nimmer <rhyme label="a" type="m" corresp="#s3:l1">deer'</rhyme>.</l>
        <l id="s3:l3" met="4" type="-+">'t Vleesch zy getemt in reine <rhyme label="b" type="m">tucht</rhyme>.</l>
        <l id="s3:l4" met="4" type="-+">Hoor als ons harte tot u <rhyme label="b" type="m" corresp="#s3:l3">zugt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Wanneer wy leggen in de <rhyme label="a" type="m">rust</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Zelf van het leven <rhyme label="a" type="m" corresp="#s4:l1">onbewust</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Dek ons dan met uw rechte <rhyme label="b" type="m">handt</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">En vry ons door uw <rhyme label="b" type="m" corresp="#s4:l3">onderstant</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Bescherm de gansche <rhyme label="a" type="m">Christenheit</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Uw hulp zy ons altoos <rhyme label="a" type="m" corresp="#s5:l1">bereidt</rhyme>.</l>
        <l id="s5:l3" met="4" type="-+">Redt ons, ô Godt, uit allen <rhyme label="b" type="m">noodt</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Om Jezus bloet en bittren <rhyme label="b" type="m" corresp="#s5:l3">doodt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Gedenk, ô Heer, den zwaaren <rhyme label="a" type="m">tyt</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Wanneer de Satan ons <rhyme label="a" type="m" corresp="#s6:l1">bestrydt</rhyme>;</l>
        <l id="s6:l3" met="4" type="-+">Als onze ziel dan zuchten <rhyme label="b" type="m">looft</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Zoo schenk haar uw genade en <rhyme label="b" type="m" corresp="#s6:l3">troost</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Godt Vader hebbe roem en <rhyme label="a" type="m">eer</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Met zynen Zoone, als onzen <rhyme label="a" type="m" corresp="#s7:l1">Heer</rhyme>;</l>
        <l id="s7:l3" met="4" type="-+">Den Heilgen Geest zy lof <rhyme label="b" type="m">gezeit</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Met hen tot in der <rhyme label="b" type="m" corresp="#s7:l3">eeuwigheit</rhyme>.</l>
      </lg>
    </lg>
  </text>

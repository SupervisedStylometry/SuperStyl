  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Een Ziel die in Godt <rhyme label="a" type="m">woondt</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">En Godt aen haer <rhyme label="a" type="m" corresp="#s1:l1">verthoont</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Is niet te <rhyme label="b" type="f">verghelijcken</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Haer gheluck gaet boven <rhyme label="c" type="m">macht</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Boven alle eer en <rhyme label="c" type="m" corresp="#s1:l4">pracht</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Iae boven <rhyme label="b" type="f" corresp="#s1:l3">Koninckrijcken</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Want sy is nu als <rhyme label="a" type="m">voldaen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Niet en kan haer teghen <rhyme label="a" type="m" corresp="#s2:l1">gaen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Niet kan haer rust <rhyme label="b" type="f">verstooren</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Niet en weerstaet haer <rhyme label="c" type="m">sin</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Niet neemt van haer de <rhyme label="c" type="m" corresp="#s2:l4">Min</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Want sy is in Godt <rhyme label="b" type="f" corresp="#s2:l3">verloren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Haren gheest is noydt <rhyme label="a" type="m">beswaert</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Want s’en is niet eens <rhyme label="a" type="m" corresp="#s3:l1">vervaert</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Van swereldts droeve <rhyme label="b" type="f">maeren</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Want sy weet die sy <rhyme label="c" type="m">bemindt</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">En ghekosen heeft voor <rhyme label="c" type="m" corresp="#s3:l4">vriendt</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Vyt liefde sal <rhyme label="b" type="f" corresp="#s3:l3">bewaeren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Die Ziel ontbreeckt gheen <rhyme label="a" type="m">broodt</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Want sy wordt heel soet <rhyme label="a" type="m" corresp="#s4:l1">ghenoodt</rhyme>.</l>
        <l id="s4:l3" met="3" type="-+">Daer s’eeuwigh by sal <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Al ist eenen dieren <rhyme label="c" type="m">tijt</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Sy is altijt <rhyme label="c" type="m" corresp="#s4:l4">verblijdt</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Godt sal haer noydt <rhyme label="b" type="f" corresp="#s4:l3">begheven</rhyme>,</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Soo sy bindt jevers <rhyme label="a" type="m">jet</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Daer sy vindt in <rhyme label="a" type="m" corresp="#s5:l1">verdriet</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Sy weet het soo te <rhyme label="b" type="f">keeren</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Ghelijck een <rhyme label="c" type="m">Sonne-blom</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Draeyt sy het om en <rhyme label="c" type="m" corresp="#s5:l4">dom</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Al naer den wil des <rhyme label="b" type="f" corresp="#s5:l3">Heeren</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Door het uytgaen vanden <rhyme label="a" type="m">sin</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Door het sterven van de <rhyme label="a" type="m" corresp="#s6:l1">Min</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Van s’wereldts <rhyme label="b" type="f">sottigheden</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Gheraeckt sy tot dat <rhyme label="c" type="m">ent</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Dat niemandt is <rhyme label="c" type="m" corresp="#s6:l4">bekent</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Waer toe s’haer klachten gaet <rhyme label="b" type="f" corresp="#s6:l3">besteden</rhyme>.</l>
      </lg>
    </lg>
  </text>

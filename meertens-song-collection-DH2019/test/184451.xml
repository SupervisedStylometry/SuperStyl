  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">IS God voor my, zo <rhyme label="a" type="f">spreeke</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Vry alles tegen <rhyme label="b" type="m">my</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Wanneer ik roep en <rhyme label="a" type="f" corresp="#s1:l1">smeeke</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Wykt alles weg ter <rhyme label="b" type="m" corresp="#s1:l2">zy'</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Ben ik by 't Hooft in <rhyme label="c" type="f">g'naade</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Ben ik gelieft by <rhyme label="d" type="m">God</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Kan my geen Vyand <rhyme label="c" type="f" corresp="#s1:l5">schaden</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Nog een'ger boozen <rhyme label="d" type="m" corresp="#s1:l6">Rot</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Nu weet ik en <rhyme label="a" type="f">geloove</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En roem, in 't hert <rhyme label="b" type="m">gewis</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Dat God, myn God daar <rhyme label="a" type="f" corresp="#s2:l1">boven</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">My goed en gunstig <rhyme label="b" type="m" corresp="#s2:l2">is</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">En dat Hy in <rhyme label="c" type="f">gevaaren</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">My trouw ter regten <rhyme label="d" type="m">staat</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">En stormen breekt en <rhyme label="c" type="f" corresp="#s2:l5">baaren</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">En vrydt voor alle <rhyme label="d" type="m" corresp="#s2:l6">kwaad</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">De grond daar ik my <rhyme label="a" type="f">gronde</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Is Jesus en zyn <rhyme label="b" type="m">bloed</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Dat reinigt my van <rhyme label="a" type="f" corresp="#s3:l1">zonden</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En geeft my 't eeuwig <rhyme label="b" type="m" corresp="#s3:l2">Goed</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Aan my en aan myn <rhyme label="c" type="f">leeven</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Is niets op deeze <rhyme label="d" type="m">aard</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">'t Geen Christus my <rhyme label="c" type="f" corresp="#s3:l5">gegeven</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Dat is der Liefde <rhyme label="d" type="m" corresp="#s3:l6">waard</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Myn Jesus is myn <rhyme label="a" type="f">eere</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Myn glans, myn schoonste <rhyme label="b" type="m">licht</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Als Hy niet in my <rhyme label="a" type="f" corresp="#s4:l1">waare</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Dorst ik voor Gods <rhyme label="b" type="m" corresp="#s4:l2">gericht</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Nog kon 'er niet <rhyme label="c" type="f">verschynen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Nog voor den Glans <rhyme label="d" type="m">bestaan</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Ik moest terstond <rhyme label="c" type="f" corresp="#s4:l5">verdwynen</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Als Was by 't vuur' <rhyme label="d" type="m" corresp="#s4:l6">vergaan</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Maar Jesus heeft <rhyme label="a" type="f">vertreden</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Myn Vonnis en myn <rhyme label="b" type="m">Dood</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Hy komt myn Ziel <rhyme label="a" type="f" corresp="#s5:l1">bekleeden</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Maakt sneeuwit 't geen is <rhyme label="b" type="m" corresp="#s5:l2">rood</rhyme>;</l>
        <l id="s5:l5" met="3" type="-+">In Hem word' ik <rhyme label="c" type="f">genezen</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">En heb een <rhyme label="d" type="m">helden-moed</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">En geen Gericht te <rhyme label="c" type="f" corresp="#s5:l5">vreezen</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Gelyk een Zondaar <rhyme label="d" type="m" corresp="#s5:l6">doet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Niets, niets kan my <rhyme label="a" type="f">verdoemen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Niets neemt my mynen <rhyme label="b" type="m">moed</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Kan tegen 't Oordeel <rhyme label="a" type="f" corresp="#s6:l1">roemen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Schoon Satan brult en <rhyme label="b" type="m" corresp="#s6:l2">woedt</rhyme>;</l>
        <l id="s6:l5" met="3" type="-+">Geen vreeze doet my <rhyme label="c" type="f">schrikken</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Geen onheil my <rhyme label="d" type="m">bedroeft</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Dewyl myn hert de <rhyme label="c" type="f" corresp="#s6:l5">blikken</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Van Jesus Liefde <rhyme label="d" type="m" corresp="#s6:l6">proest</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Zyn Geest woont in myn <rhyme label="a" type="f">herte</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Regeert myn gansche <rhyme label="b" type="m">zin</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Verdryft zorg, angst en <rhyme label="a" type="f" corresp="#s7:l1">smerte</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">En stort my blydschap <rhyme label="b" type="m" corresp="#s7:l2">in</rhyme>;</l>
        <l id="s7:l5" met="3" type="-+">Geeft zeegen, en <rhyme label="c" type="f">gedyen</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Tot 't geen Hy schiep in <rhyme label="d" type="m">my</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">En helpt my Abba <rhyme label="c" type="f" corresp="#s7:l5">schreyen</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">En maakt zyn Kindje <rhyme label="d" type="m" corresp="#s7:l6">vry</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Of zo my vrees <rhyme label="a" type="f">doorboorde</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Of eenig' angst of <rhyme label="b" type="m">pyn</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Zo zucht en spreekt Hy <rhyme label="a" type="f" corresp="#s8:l1">woorden</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Die onuitspreeklyk <rhyme label="b" type="m" corresp="#s8:l2">zyn</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Voor my en mynen <rhyme label="c" type="f">monde</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Maar God zeer wel <rhyme label="d" type="m">bewust</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Als die aan 's herten <rhyme label="c" type="f" corresp="#s8:l5">gronde</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Ziet zyn vermaak en <rhyme label="d" type="m" corresp="#s8:l6">lust</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Zyn Geest spreekt mynen <rhyme label="a" type="f">Geeste</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Menig zoet troostwoord <rhyme label="b" type="m">toe</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Zo dat ik gae ten <rhyme label="a" type="f" corresp="#s9:l1">Feeste</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Altyd zeer wel te <rhyme label="b" type="m" corresp="#s9:l2">moê</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">En zie, hoe m' is hier <rhyme label="c" type="f">boven</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Een nieuwe Stad <rhyme label="d" type="m">gebouwt</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Daar, 't geen ik nu <rhyme label="c" type="f" corresp="#s9:l5">gelove</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Zal worden <rhyme label="d" type="m" corresp="#s9:l6">aangeschouwt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Daar is myn kost'lyk E <rhyme label="a" type="f">ve</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">'t Welk thans geen ooge <rhyme label="b" type="m">ziet</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">En schoon ik val en <rhyme label="a" type="f" corresp="#s10:l1">sterve</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Valt dog myn hemel <rhyme label="b" type="m" corresp="#s10:l2">niet</rhyme>;</l>
        <l id="s10:l5" met="3" type="-+">En of myn lichaams <rhyme label="c" type="f">ooge</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Zomtyds van traanen <rhyme label="d" type="m">weet</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Myn Jesus komt ze <rhyme label="c" type="f" corresp="#s10:l5">droogen</rhyme>,</l>
        <l id="s10:l8" met="3" type="-+">En Hy verzoet myn <rhyme label="d" type="m" corresp="#s10:l6">leed</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Wie zich met Hem <rhyme label="a" type="f">verbindet</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Den Satan vliedt en <rhyme label="b" type="m">haat</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Die word vervolgt, en <rhyme label="a" type="f" corresp="#s11:l1">vindet</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Veragting, hoon en <rhyme label="b" type="m" corresp="#s11:l2">smaat</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Te lyden en te <rhyme label="c" type="f">draagen</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Geraakt by 't volk in <rhyme label="d" type="m">spot</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">'t Welk, in hun goede <rhyme label="c" type="f" corresp="#s11:l5">dagen</rhyme>,</l>
        <l id="s11:l8" met="3" type="-+">Denkt: waar is nu hun <rhyme label="d" type="m" corresp="#s11:l6">God</rhyme>?</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Dat is my niet <rhyme label="a" type="f">verborgen</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Dog ben ik gansch <rhyme label="b" type="m">verblydt</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Godt wil ik laaten <rhyme label="a" type="f" corresp="#s12:l1">zorgen</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Wien 'k my heb <rhyme label="b" type="m" corresp="#s12:l2">toegewydt</rhyme>;</l>
        <l id="s12:l5" met="3" type="-+">Het koste lyf en <rhyme label="c" type="f">leeven</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Myn naam, en eer, en <rhyme label="d" type="m">goed</rhyme>,</l>
        <l id="s12:l7" met="3" type="-+">Aan Jesus wil ik <rhyme label="c" type="f" corresp="#s12:l5">kleeven</rhyme>,</l>
        <l id="s12:l8" met="3" type="-+">Met onverwrikb'ren <rhyme label="d" type="m" corresp="#s12:l6">voet</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">De weereld mag <rhyme label="a" type="f">verbreken</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Gy blyft my eeuwig <rhyme label="b" type="m">by</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Geen branden, wonden, <rhyme label="a" type="f" corresp="#s13:l1">steeken</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Zal scheiden u en <rhyme label="b" type="m" corresp="#s13:l2">my</rhyme>.</l>
        <l id="s13:l5" met="3" type="-+">Geen hongeren, geen <rhyme label="c" type="f">dorsten</rhyme>,</l>
        <l id="s13:l6" met="3" type="-+">Geen Armoê, nog geen <rhyme label="d" type="m">pyn</rhyme>,</l>
        <l id="s13:l7" met="3" type="-+">Geen toorn des grooten <rhyme label="c" type="f" corresp="#s13:l5">Vorsten</rhyme>,</l>
        <l id="s13:l8" met="3" type="-+">Zal my een hind'ring <rhyme label="d" type="m" corresp="#s13:l6">zyn</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Geen Engel, geen <rhyme label="a" type="f">verblyden</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Geen throon, geen <rhyme label="b" type="m">heerlykheit</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Geen lief, of leed en <rhyme label="a" type="f" corresp="#s14:l1">lyden</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">Geen afgrond nog zo <rhyme label="b" type="m" corresp="#s14:l2">wyd</rhyme>,</l>
        <l id="s14:l5" met="3" type="-+">Of wat my wild' <rhyme label="c" type="f">verschrikken</rhyme>,</l>
        <l id="s14:l6" met="3" type="-+">Het zy of klein of <rhyme label="d" type="m">groot</rhyme>,</l>
        <l id="s14:l7" met="3" type="-+">Geen ding zal ooit my <rhyme label="c" type="f" corresp="#s14:l5">rukken</rhyme></l>
        <l id="s14:l8" met="3" type="-+">Uit uwen arm en <rhyme label="d" type="m" corresp="#s14:l6">schoot</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Myn hert gaat vrolyk <rhyme label="a" type="f">springen</rhyme>,</l>
        <l id="s15:l2" met="3" type="-+">En kan niet treurig <rhyme label="b" type="m">zyn</rhyme>,</l>
        <l id="s15:l3" met="3" type="-+">'t Is vol van vreugd en <rhyme label="a" type="f" corresp="#s15:l1">zingen</rhyme>,</l>
        <l id="s15:l4" met="3" type="-+">Ziet niets als <rhyme label="b" type="m" corresp="#s15:l2">Zonneschyn</rhyme>.</l>
        <l id="s15:l5" met="3" type="-+">De Zon van myn <rhyme label="c" type="f">verblyden</rhyme>,</l>
        <l id="s15:l6" met="3" type="-+">Is myn Heer Jesus <rhyme label="d" type="m">Christ</rhyme>,</l>
        <l id="s15:l7" met="3" type="-+">En 't geen my troost in 't <rhyme label="c" type="f" corresp="#s15:l5">lyden</rhyme>,</l>
        <l id="s15:l8" met="3" type="-+">Is 't geen hier boven <rhyme label="d" type="m" corresp="#s15:l6">is</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">A	L mijn <rhyme label="a" type="m">vermaek</rhyme>,</l>
        <l id="s1:l2" met="2" type="-+">En vrolijke <rhyme label="b" type="f">dagen</rhyme></l>
        <l id="s1:l3" met="2" type="-+">Staen in een <rhyme label="a" type="m" corresp="#s1:l1">saek</rhyme></l>
        <l id="s1:l4" met="2" type="-+">Wel waerdig om <rhyme label="b" type="f" corresp="#s1:l2">dragen</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">De naem van 't <rhyme label="c" type="m">Zaet</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">Van Hemel, en <rhyme label="d" type="f">Aerde</rhyme>;</l>
        <l id="s1:l7" met="2" type="-+">En watter <rhyme label="c" type="m" corresp="#s1:l5">staet</rhyme>,</l>
        <l id="s1:l8" met="2" type="-+">En oyt was in <rhyme label="d" type="f" corresp="#s1:l6">waerde</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Benje <rhyme label="a" type="m">begeer'g</rhyme></l>
        <l id="s2:l2" met="2" type="-+">Om van my te <rhyme label="b" type="f">weten</rhyme></l>
        <l id="s2:l3" met="2" type="-+">Wie of soo <rhyme label="a" type="m" corresp="#s2:l1">eerig</rhyme></l>
        <l id="s2:l4" met="2" type="-+">Wort vanme <rhyme label="b" type="f" corresp="#s2:l2">beseten</rhyme>?</l>
        <l id="s2:l5" met="2" type="-+">Ik noem 't de <rhyme label="c" type="m">Min</rhyme>,</l>
        <l id="s2:l6" met="2" type="-+">Of de ware <rhyme label="d" type="f">Liefde</rhyme>;</l>
        <l id="s2:l7" met="2" type="-+">Die in mijn <rhyme label="c" type="m" corresp="#s2:l5">sin</rhyme></l>
        <l id="s2:l8" met="2" type="-+">Noyt niemant en <rhyme label="d" type="f" corresp="#s2:l6">g'riefde</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Want sonder <rhyme label="a" type="m">dat</rhyme></l>
        <l id="s3:l2" met="2" type="-+">Is gants niet <rhyme label="b" type="f">geschapen</rhyme>;</l>
        <l id="s3:l3" met="2" type="-+">Sy is een <rhyme label="a" type="m" corresp="#s3:l1">schat</rhyme></l>
        <l id="s3:l4" met="2" type="-+">Die vredig doet <rhyme label="b" type="f" corresp="#s3:l2">slapen</rhyme>:</l>
        <l id="s3:l5" met="2" type="-+">Daer sy <rhyme label="c" type="m">Huys-vest</rhyme></l>
        <l id="s3:l6" met="2" type="-+">Is reede, en <rhyme label="d" type="f">blyheyt</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">En voor het <rhyme label="c" type="m" corresp="#s3:l5">lest</rhyme></l>
        <l id="s3:l8" met="2" type="-+">Sy geeft volle <rhyme label="d" type="f" corresp="#s3:l6">vryheyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Ik liever <rhyme label="a" type="m">een</rhyme>,</l>
        <l id="s4:l2" met="2" type="-+">En sy liefd' my <rhyme label="b" type="f">weder</rhyme>;</l>
        <l id="s4:l3" met="2" type="-+">Wy twee, zijn <rhyme label="a" type="m" corresp="#s4:l1">een</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">En setten ons <rhyme label="b" type="f" corresp="#s4:l2">neder</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Niet in een <rhyme label="c" type="m">tal</rhyme></l>
        <l id="s4:l6" met="2" type="-+">Van wereltsche <rhyme label="d" type="f">dingen</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">Die 't <rhyme label="c" type="m" corresp="#s4:l5">los-geval</rhyme></l>
        <l id="s4:l8" met="2" type="-+">Tot puyn-hoop kan <rhyme label="d" type="f" corresp="#s4:l6">bringen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Maer in 't <rhyme label="a" type="m">genoeg</rhyme></l>
        <l id="s5:l2" met="2" type="-+">Met kleene <rhyme label="b" type="f">schatten</rhyme>,</l>
        <l id="s5:l3" met="2" type="-+">Die laet, en <rhyme label="a" type="m" corresp="#s5:l1">vroeg</rhyme></l>
        <l id="s5:l4" met="2" type="-+">De weelde <rhyme label="b" type="f" corresp="#s5:l2">bevatten</rhyme>:</l>
        <l id="s5:l5" met="2" type="-+">Een stroyen <rhyme label="c" type="m">Hut</rhyme>,</l>
        <l id="s5:l6" met="2" type="-+">En graesige <rhyme label="d" type="f">Beemden</rhyme>,</l>
        <l id="s5:l7" met="2" type="-+">Strekken een <rhyme label="c" type="m" corresp="#s5:l5">stut</rhyme></l>
        <l id="s5:l8" met="2" type="-+">Om niet te <rhyme label="d" type="f" corresp="#s5:l6">vervreemden</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Van hem die <rhyme label="a" type="m">was</rhyme>,</l>
        <l id="s6:l2" met="2" type="-+">Die is, en sal <rhyme label="b" type="f">blijven</rhyme>,</l>
        <l id="s6:l3" met="2" type="-+">En goedt <rhyme label="a" type="m" corresp="#s6:l1">aen-was</rhyme></l>
        <l id="s6:l4" met="2" type="-+">Kond' veelmael <rhyme label="b" type="f" corresp="#s6:l2">verdrijven</rhyme></l>
        <l id="s6:l5" met="2" type="-+">De eed'le <rhyme label="c" type="m">deugt</rhyme>,</l>
        <l id="s6:l6" met="2" type="-+">Vyt menigs <rhyme label="d" type="f">gedachten</rhyme>,</l>
        <l id="s6:l7" met="2" type="-+">Bemint gy <rhyme label="c" type="m" corresp="#s6:l5">vreugt</rhyme>,</l>
        <l id="s6:l8" met="2" type="-+">wilt na 't beste <rhyme label="d" type="f" corresp="#s6:l6">trachten</rhyme>.</l>
      </lg>
    </lg>
  </text>

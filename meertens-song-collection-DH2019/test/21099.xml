  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">'t HUw'lijck dat is een staet, <rhyme label="a" type="m">geplant</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Van Godt in 't <rhyme label="b" type="m">Paradijs</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Met Man en Vrouwe <rhyme label="a" type="m" corresp="#s1:l1">goeder-handt</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Gerechtigh, vroom en <rhyme label="b" type="m" corresp="#s1:l2">wijs</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">'t Huw'lijck is goet, die't in Godt <rhyme label="c" type="m">doet</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">En voltreckt tot Gods <rhyme label="b" type="m" corresp="#s1:l2">prijs</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">'t Houw'lijck dat vanght met Adam <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Godt voeght hem toe een <rhyme label="b" type="m">Wijf</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Vyt sijn ribbe soo wy <rhyme label="a" type="m" corresp="#s2:l1">verstaen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Als hy lagh en sliep <rhyme label="b" type="m" corresp="#s2:l2">stijf</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">'t Huw'lijck is goet, die't in Godt <rhyme label="c" type="m">doet</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Twee zielen maer een <rhyme label="b" type="m" corresp="#s2:l2">lijf</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">'t Huw'lijck dat is <rhyme label="a" type="m">gebenedijt</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Van Godt den Heer <rhyme label="b" type="m">bedacht</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Om te vermeeren metter <rhyme label="a" type="m" corresp="#s3:l1">tijdt</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Het menschelijck <rhyme label="b" type="m" corresp="#s3:l2">geslacht</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">'t Huw'lijck is goet, die't in God <rhyme label="c" type="m">doet</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En op sijn saecken <rhyme label="b" type="m" corresp="#s3:l2">acht</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">'t Huw'lijck dat is een soet <rhyme label="a" type="m">gespan</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Met liefden ende <rhyme label="b" type="m">min</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Houdt u oprecht en vroom daer <rhyme label="a" type="m" corresp="#s4:l1">an</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Het geeft seer groot <rhyme label="b" type="m" corresp="#s4:l2">gewin</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">'t Huw'lijck is goet, die 't in Godt <rhyme label="c" type="m">doet</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Met een lieff'lijcken <rhyme label="b" type="m" corresp="#s4:l2">sin</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">'t Huw'lijck is een eerlijck <rhyme label="a" type="m">streeck</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">By Gods heyligen <rhyme label="b" type="m">al</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Het sy den priester ofte <rhyme label="a" type="m" corresp="#s5:l1">leeck</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Elck een tot zijn <rhyme label="b" type="m" corresp="#s5:l2">geval</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">'t Huw'lijck is goet, die 't in God <rhyme label="c" type="m">doet</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">En blijft in sijn <rhyme label="b" type="m" corresp="#s5:l2">Schaep-stal</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">'t Huw'lijck wordt van Christo <rhyme label="a" type="m">ge-eert</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Al tot Cana in <rhyme label="b" type="m">fijn</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Tot Godes lof, het volck en <rhyme label="a" type="m" corresp="#s6:l1">weerdt</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Maeckt hy Water tot <rhyme label="b" type="m" corresp="#s6:l2">Wijn</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">'t Huw'lijck is goet, die 't met God <rhyme label="c" type="m">doet</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">In hem wilt vrolijck <rhyme label="b" type="m" corresp="#s6:l2">zijn</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">'t Huw'lijck en is te scheyden <rhyme label="a" type="m">niet</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Dat van God is <rhyme label="b" type="m">gepaert</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Daerom alle beyde <rhyme label="a" type="m" corresp="#s7:l1">toesiet</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Dat elck na aer <rhyme label="b" type="m" corresp="#s7:l2">veraert</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">'t Huw'lijck is goet, die't in God <rhyme label="c" type="m">doet</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Levende lief en <rhyme label="b" type="m" corresp="#s7:l2">waert</rhyme>.</l>
      </lg>
    </lg>
  </text>

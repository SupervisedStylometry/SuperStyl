    <melody>Amo te benigne Jesu</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">HEyl'ge Jesu! Hemelsch <rhyme label="a" type="f">voorbeeld</rhyme>!</l>
        <l id="s1:l2" met="3" type="-+">Der Englen <rhyme label="b" type="m">Heylicheyd</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Werdt als duysternis <rhyme label="a" type="f" corresp="#s1:l1">veroordeelt</rhyme></l>
        <l id="s1:l4" met="3" type="-+">By uwe <rhyme label="b" type="m" corresp="#s1:l2">Suyverheyd</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">Iesus is mijn <rhyme label="c" type="m">onbesmet</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Hooft en Hert: mijn Geest, en <rhyme label="c" type="m" corresp="#s1:l5">Wet</rhyme>.</l>
        <l id="s1:l7" met="4" type="+-">Heyligt my // Heyligt <rhyme label="d" type="m">my</rhyme>:</l>
        <l id="s1:l8" met="4" type="+-">Ick moet Jesu, sijn als <rhyme label="d" type="m" corresp="#s1:l7">Gy</rhyme>.</l>
        <l id="s1:l9" met="4" type="+-">Heyligt my // Heyligt <rhyme label="d" type="m" corresp="#s1:l7">my</rhyme>:</l>
        <l id="s1:l10" met="4" type="+-">Ick moet Heylig sijn als <rhyme label="d" type="m" corresp="#s1:l7">Gy</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Stille Jesu! die de <rhyme label="a" type="f">baren</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Van uw wil op den <rhyme label="b" type="m">grond</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Van uws Vaders wil <rhyme label="a" type="f" corresp="#s2:l1">bedaren</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En stil doen leggen <rhyme label="b" type="m" corresp="#s2:l2">cond</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Wanneer sal mijn togt en <rhyme label="c" type="m">wil</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Eens in d'uw versincken <rhyme label="c" type="m" corresp="#s2:l5">stil</rhyme>?</l>
        <l id="s2:l7" met="4" type="+-">Heyligt my // Heyligt <rhyme label="d" type="m">my</rhyme>:</l>
        <l id="s2:l8" met="4" type="+-">Ick moet Jesu, sijn als <rhyme label="d" type="m" corresp="#s2:l7">Gy</rhyme>.</l>
        <l id="s2:l9" met="4" type="+-">Heyligt my // Heyligt <rhyme label="d" type="m" corresp="#s2:l7">my</rhyme>:</l>
        <l id="s2:l10" met="4" type="+-">Ick moet stille sijn als <rhyme label="d" type="m" corresp="#s2:l7">Gy</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Wack're Jesu! vol van <rhyme label="a" type="f">sorgen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">En arbeyd sonder <rhyme label="b" type="m">maat</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Besig van den vroegen <rhyme label="a" type="f" corresp="#s3:l1">morgen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Tot aan den avond <rhyme label="b" type="m" corresp="#s3:l2">laat</rhyme>:</l>
        <l id="s3:l5" met="4" type="+-">'s Daags voor spijs met werck <rhyme label="c" type="m">beset</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">'s Nagts voor 't bedden in 't <rhyme label="c" type="m" corresp="#s3:l5">gebed</rhyme>.</l>
        <l id="s3:l7" met="4" type="+-">Heyligt my // Heyligt <rhyme label="d" type="m">my</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Ik moet Jesu, sijn als <rhyme label="d" type="m" corresp="#s3:l7">Gy</rhyme>.</l>
        <l id="s3:l9" met="4" type="+-">Heyligt my // Heyligt <rhyme label="d" type="m" corresp="#s3:l7">my</rhyme>:</l>
        <l id="s3:l10" met="4" type="+-">Ik moet wacker sijn als <rhyme label="d" type="m" corresp="#s3:l7">Gy</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Goeden Jesu! altijd <rhyme label="a" type="f">mindlijck</rhyme></l>
        <l id="s4:l2" met="3" type="-+">In liefelijck <rhyme label="b" type="m">gelaat</rhyme>:</l>
        <l id="s4:l3" met="4" type="+-">Nevens vriend en vyand <rhyme label="a" type="f" corresp="#s4:l1">vrindlijck</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Een yders hulp en <rhyme label="b" type="m" corresp="#s4:l2">raad</rhyme>:</l>
        <l id="s4:l5" met="4" type="+-">Ah! waar ick als gy: een <rhyme label="c" type="m">troost</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Aller in haar <rhyme label="c" type="m" corresp="#s4:l5">hulpeloost</rhyme>!</l>
        <l id="s4:l7" met="4" type="+-">Heyligt my // Heyligt <rhyme label="d" type="m">my</rhyme>:</l>
        <l id="s4:l8" met="4" type="+-">Ick moet Jesu, sijn als <rhyme label="d" type="m" corresp="#s4:l7">Gy</rhyme>.</l>
        <l id="s4:l9" met="4" type="+-">Heyligt my // Heyligt <rhyme label="d" type="m" corresp="#s4:l7">my</rhyme>:</l>
        <l id="s4:l10" met="4" type="+-">Ick moet minlijk sijn als <rhyme label="d" type="m" corresp="#s4:l7">Gy</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Sagte Jesu! die <rhyme label="a" type="f">sagtmoedig</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Het aller-scharpste <rhyme label="b" type="m">leet</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Wraackloos cond vergeven <rhyme label="a" type="f" corresp="#s5:l1">goedig</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Ia sonder toornen <rhyme label="b" type="m" corresp="#s5:l2">leed</rhyme>;</l>
        <l id="s5:l5" met="4" type="+-">Maar in yver cond <rhyme label="c" type="m">vergaan</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Wierd uw Vader smaad <rhyme label="c" type="m" corresp="#s5:l5">gedaan</rhyme>:</l>
        <l id="s5:l7" met="4" type="+-">Heyligt my // Heyligt <rhyme label="d" type="m">my</rhyme>:</l>
        <l id="s5:l8" met="4" type="+-">Ick moet Jesu, sijn als <rhyme label="d" type="m" corresp="#s5:l7">Gy</rhyme>.</l>
        <l id="s5:l9" met="4" type="+-">Heyligt my // Heyligt <rhyme label="d" type="m" corresp="#s5:l7">my</rhyme>:</l>
        <l id="s5:l10" met="4" type="+-">Ick moet Jesu, sijn als <rhyme label="d" type="m" corresp="#s5:l7">Gy</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Nedrig' Heyland! weerdig <rhyme label="a" type="f">t'eeren</rhyme>:</l>
        <l id="s6:l2" met="3" type="-+">Die aller menschen <rhyme label="b" type="m">loff</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Seer ootmoedig cond <rhyme label="a" type="f" corresp="#s6:l1">ontberen</rhyme>:</l>
        <l id="s6:l4" met="3" type="-+">En so des hoogmoeds <rhyme label="b" type="m" corresp="#s6:l2">stoff</rhyme></l>
        <l id="s6:l5" met="4" type="+-">Wickte, dat het oordeel <rhyme label="c" type="m">claar</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Altijd stond in <rhyme label="c" type="m" corresp="#s6:l5">d'evenaar</rhyme>.</l>
        <l id="s6:l7" met="4" type="+-">Heyligt my // Heyligt <rhyme label="d" type="m">my</rhyme>:</l>
        <l id="s6:l8" met="4" type="+-">Ick moet Iesu, sijn als <rhyme label="d" type="m" corresp="#s6:l7">Gy</rhyme>.</l>
        <l id="s6:l9" met="4" type="+-">Heyligt my // Heyligt <rhyme label="d" type="m" corresp="#s6:l7">my</rhyme>:</l>
        <l id="s6:l10" met="4" type="+-">Ick moet Nedrig sijn als <rhyme label="d" type="m" corresp="#s6:l7">Gy</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Suyv're Iesu die de <rhyme label="a" type="f">driften</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Van 't lichaam tomen <rhyme label="b" type="m">cond</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">En het cuysch van 't oncuysch <rhyme label="a" type="f" corresp="#s7:l1">siften</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Mijn hert, en oog, en <rhyme label="b" type="m" corresp="#s7:l2">mond</rhyme>:</l>
        <l id="s7:l5" met="4" type="+-">All uw leden hielt gy <rhyme label="c" type="m">net</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">All uw dencken <rhyme label="c" type="m" corresp="#s7:l5">onbesmet</rhyme>.</l>
        <l id="s7:l7" met="4" type="+-">Heyligt my // Heyligt <rhyme label="d" type="m">my</rhyme>:</l>
        <l id="s7:l8" met="4" type="+-">Ick moet Iesu, sijn als <rhyme label="d" type="m" corresp="#s7:l7">Gy</rhyme>.</l>
        <l id="s7:l9" met="4" type="+-">Heyligt my // Heyligt <rhyme label="d" type="m" corresp="#s7:l7">my</rhyme>:</l>
        <l id="s7:l10" met="4" type="+-">Ick moet Suyver sijn als <rhyme label="d" type="m" corresp="#s7:l7">Gy</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Mat'ge Iesu! dien de <rhyme label="a" type="f">rede</rhyme></l>
        <l id="s8:l2" met="3" type="-+">De spijs en dranck toe <rhyme label="b" type="m">mat</rhyme>;</l>
        <l id="s8:l3" met="4" type="+-">Dertel noyt in <rhyme label="a" type="f" corresp="#s8:l1">leckerheden</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Noyt vol, of <rhyme label="b" type="m" corresp="#s8:l2">over-sat</rhyme>:</l>
        <l id="s8:l5" met="4" type="+-">'s Hemels wil te doen hielt <rhyme label="c" type="m">gy</rhyme></l>
        <l id="s8:l6" met="4" type="+-">Voor uw spijs en <rhyme label="c" type="m" corresp="#s8:l5">leckerny</rhyme>.</l>
        <l id="s8:l7" met="4" type="+-">Heyligt my // Heyligt <rhyme label="d" type="m">my</rhyme>:</l>
        <l id="s8:l8" met="4" type="+-">Ick moet Iesu, sijn als <rhyme label="d" type="m" corresp="#s8:l7">Gy</rhyme>.</l>
        <l id="s8:l9" met="4" type="+-">Heyligt my // Heyligt <rhyme label="d" type="m" corresp="#s8:l7">my</rhyme>:</l>
        <l id="s8:l10" met="4" type="+-">Ick moet Matig sijn als <rhyme label="d" type="m" corresp="#s8:l7">Gy</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Heyl'ge Iesu! druckt uw <rhyme label="a" type="f">leden</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Ten leven op de <rhyme label="b" type="m">mijn'</rhyme>;</l>
        <l id="s9:l3" met="4" type="+-">Doet mijn voet als d'uwe <rhyme label="a" type="f" corresp="#s9:l1">treden</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Mijn oog als 't uwe <rhyme label="b" type="m" corresp="#s9:l2">sijn</rhyme></l>
        <l id="s9:l5" met="4" type="+-">Boven al maackt dat mijn <rhyme label="c" type="m">hert</rhyme></l>
        <l id="s9:l6" met="4" type="+-">Als het uw regt vierig <rhyme label="c" type="m" corresp="#s9:l5">wert</rhyme>.</l>
        <l id="s9:l7" met="4" type="+-">Heyligt my // Heyligt <rhyme label="d" type="m">my</rhyme>!</l>
        <l id="s9:l8" met="4" type="+-">Ick moet Iesu, sijn als <rhyme label="d" type="m" corresp="#s9:l7">Gy</rhyme>.</l>
        <l id="s9:l9" met="4" type="+-">Heyligt my // Heyligt <rhyme label="d" type="m" corresp="#s9:l7">my</rhyme>:</l>
        <l id="s9:l10" met="4" type="+-">Ick moet Iesu, sijn als <rhyme label="d" type="m" corresp="#s9:l7">Gy</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

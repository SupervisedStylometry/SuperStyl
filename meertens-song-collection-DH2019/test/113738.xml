    <melody>Trek herders naar de stal</melody>
    <categories>
      <category translation="seasons and annual events">jaarkring</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">TReckt, Herders, nae den <rhyme label="a" type="m">stal</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Daer henen spoeit u <rhyme label="a" type="m" corresp="#s1:l1">al</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Daer sult ghy sien een <rhyme label="b" type="m">kindt</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Dat u <rhyme label="b" type="m" corresp="#s1:l3">bemint</rhyme>,</l>
        <l id="s1:l5" met="5" type="-+">Dat comt vergieten voor u all' sijn <rhyme label="c" type="m">bloedt</rhyme>,</l>
        <l id="s1:l6" met="5" type="-+">Om u te coopen u oneyndich <rhyme label="c" type="m" corresp="#s1:l5">goedt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Dat, in een krib <rhyme label="a" type="m">gheleyt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Om uwent wil nu <rhyme label="a" type="m" corresp="#s2:l1">schreyt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Den hemel dat <rhyme label="b" type="m">verheught</rhyme></l>
        <l id="s2:l4" met="2" type="-+">Met alle <rhyme label="b" type="m" corresp="#s2:l3">vreught</rhyme>,</l>
        <l id="s2:l5" met="5" type="-+">Op 't hoy in doeckskens stijf van kouw het <rhyme label="c" type="m">beeft</rhyme>,</l>
        <l id="s2:l6" met="5" type="-+">Aen alle dieren dat hun hitte <rhyme label="c" type="m" corresp="#s2:l5">gheeft</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Gaet daer, nae uwen <rhyme label="a" type="m">wensch</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Godt sien gheworden <rhyme label="a" type="m" corresp="#s3:l1">mensch</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Die daer onnnoosel <rhyme label="b" type="m">light</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">Als een kleyn <rhyme label="b" type="m" corresp="#s3:l3">wight</rhyme>,</l>
        <l id="s3:l5" met="5" type="-+">Gaet onder snootheydt sien de <rhyme label="c" type="m">Maiesteyt</rhyme>,</l>
        <l id="s3:l6" met="5" type="-+">De wijsheydt onder kindtse <rhyme label="c" type="m" corresp="#s3:l5">slechticheydt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Gaet sien hem suyghen <rhyme label="a" type="m">daer</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Die 't hier laeft <rhyme label="a" type="m" corresp="#s4:l1">allegaer</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Siet hoe dat hem <rhyme label="b" type="m">behaeght</rhyme></l>
        <l id="s4:l4" met="2" type="-+">'T sogh van een <rhyme label="b" type="m" corresp="#s4:l3">maeght</rhyme>,</l>
        <l id="s4:l5" met="5" type="-+">'T sogh dat hy in haer borsten vloeien <rhyme label="c" type="m">doet</rhyme>,</l>
        <l id="s4:l6" met="5" type="-+">Hy, die den oorspronck is van alle <rhyme label="c" type="m" corresp="#s4:l5">goedt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Siet, hy van liefde <rhyme label="a" type="m">heet</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">'Tonthelsen u <rhyme label="a" type="m" corresp="#s5:l1">bereet</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Ghenaedich u <rhyme label="b" type="m">verwaght</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">Soo seer u <rhyme label="b" type="m" corresp="#s5:l3">acht</rhyme>,</l>
        <l id="s5:l5" met="5" type="-+">Den kus van vre die u daer gheven <rhyme label="c" type="m">sal</rhyme>,</l>
        <l id="s5:l6" met="5" type="-+">Den vre die inbrenght in dit tranen <rhyme label="c" type="m" corresp="#s5:l5">dal</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Gaet hem daer bidden <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Daer nae sijn gratie <rhyme label="a" type="m" corresp="#s6:l1">staen</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Die hy om niet daer <rhyme label="b" type="m">gheeft</rhyme>,</l>
        <l id="s6:l4" met="2" type="-+">Daert al door <rhyme label="b" type="m" corresp="#s6:l3">leeft</rhyme>,</l>
        <l id="s6:l5" met="5" type="-+">Die is de mensch ghecomen in 't <rhyme label="c" type="m">ghesicht</rhyme>,</l>
        <l id="s6:l6" met="5" type="-+">Op dat hy eens hem sie in 't eewich <rhyme label="c" type="m" corresp="#s6:l5">licht</rhyme>.</l>
      </lg>
    </lg>
  </text>

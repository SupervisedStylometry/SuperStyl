    <tags/>
    <melody>'s Winters 's zomers even groen</melody>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Daer zijn nu veel <rhyme label="a" type="f">Godts-diensticheden</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">In het genaemde <rhyme label="b" type="m">Christendom</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Sy schijnen al gegront op <rhyme label="a" type="f" corresp="#s1:l1">reden</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">En yder een heeft sijn <rhyme label="b" type="m" corresp="#s1:l2">waerom</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Nochtans niet een sonder <rhyme label="c" type="f">ghebreken</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Gelijck men aen de vruchten <rhyme label="d" type="m">siet</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Al conden sy als Engelen <rhyme label="c" type="f" corresp="#s1:l5">spreken</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">De rechte Liefd’ en isser <rhyme label="d" type="m" corresp="#s1:l6">niet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">De rechte liefde maeckt <rhyme label="a" type="f">volcomen</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Maer sonder die ist al <rhyme label="b" type="m">ghebreck</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Al wil men ‘t noch soo heyligh <rhyme label="a" type="f" corresp="#s2:l1">noemen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Al scheen ‘t uytwendigh sonder <rhyme label="b" type="m" corresp="#s2:l2">vleck</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">En datmen hem van alles <rhyme label="c" type="f">wachten</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Laetmen hem daer op duncken <rhyme label="d" type="m">yet</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Om sijnen naesten te <rhyme label="c" type="f" corresp="#s2:l5">verachten</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">De rechte Liefd’ en isser <rhyme label="d" type="m" corresp="#s2:l6">niet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Sy roemen op haer strenge <rhyme label="a" type="f">wegen</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Daer sy uytwendigh in <rhyme label="b" type="m">bestaen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Maer ist in strengicheyt <rhyme label="a" type="f" corresp="#s3:l1">gheleghen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">De Ioden moeten voren <rhyme label="b" type="m" corresp="#s3:l2">gaen</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Die haer kinders den Moloch <rhyme label="c" type="f">branden</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Maer Godt den Heer haer weten <rhyme label="d" type="m">liet</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">My grouwelt sulcke <rhyme label="c" type="f" corresp="#s3:l5">offerhanden</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">De rechte Liefd’ en isser <rhyme label="d" type="m" corresp="#s3:l6">niet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Sy namen op haer groote <rhyme label="a" type="f">lasten</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Als sy met anghst en moeyte <rhyme label="b" type="m">swaer</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">In sacken en in asschen <rhyme label="a" type="f" corresp="#s4:l1">vasten</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Naer Godt en vraegde niet daer <rhyme label="b" type="m" corresp="#s4:l2">naer</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Sy wilden met den Heere <rhyme label="c" type="f">rechten</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Waerom hy dit niet aen en <rhyme label="d" type="m">siet</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Hy sprack tot haer door sijne <rhyme label="c" type="f" corresp="#s4:l5">knechten</rhyme></l>
        <l id="s4:l8" met="4" type="-+">De rechte Liefd’ en isser <rhyme label="d" type="m" corresp="#s4:l6">niet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Besnydet uwe hert <rhyme label="a" type="f">inwendigh</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Dne hongherighen breeckt u <rhyme label="b" type="m">broot</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Sijt van u naesten niet <rhyme label="a" type="f" corresp="#s5:l1">afwendigh</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Maer doet hem bystant in den <rhyme label="b" type="m" corresp="#s5:l2">noot</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Dan sal ick u ghebedt <rhyme label="c" type="f">verhooren</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Maer soo langh als dit niet <rhyme label="d" type="m">gheschiet</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Al uwen arbeyt is <rhyme label="c" type="f" corresp="#s5:l5">verlooren</rhyme>,</l>
        <l id="s5:l8" met="4" type="-+">De rechte Liefd’ en isser <rhyme label="d" type="m" corresp="#s5:l6">niet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Wy moeten heden sijn <rhyme label="a" type="f">verwondert</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Siende verscheyden volcken <rhyme label="b" type="m">hier</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Die van de werelt <rhyme label="a" type="f" corresp="#s6:l1">afgesondert</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Malcanderen ghelijck sijn <rhyme label="b" type="m" corresp="#s6:l2">schier</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Nochtans en moghen sy niet <rhyme label="c" type="f">velen</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Datmense ‘t samen broeders <rhyme label="d" type="m">hioet</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Dit isset dat haer doet <rhyme label="c" type="f" corresp="#s6:l5">verschelen</rhyme>,</l>
        <l id="s6:l8" met="4" type="-+">De rechte Liefd’ en isser <rhyme label="d" type="m" corresp="#s6:l6">niet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Want siet de alghemeyne <rhyme label="a" type="f">leden</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">En weten qualijck van ‘t <rhyme label="b" type="m">verschil</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Sy leefden ‘t samen wel in <rhyme label="a" type="f" corresp="#s7:l1">vreden</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Waert d’opperhoofden van haer <rhyme label="b" type="m" corresp="#s7:l2">wil</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Soo yemant poocht te <rhyme label="c" type="f">onderwinden</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Gemeynsaemheyt men ‘t haer <rhyme label="d" type="m">verbiet</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">Wt sulcke dinghen wy <rhyme label="c" type="f" corresp="#s7:l5">bevinden</rhyme>,</l>
        <l id="s7:l8" met="4" type="-+">De rechte Liefd’ en isser <rhyme label="d" type="m" corresp="#s7:l6">niet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Want waerder liefde Gods <rhyme label="a" type="f">voltrouwen</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">En datmen het verdwaelde <rhyme label="b" type="m">socht</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Hoe gheerne soumen vrientschap <rhyme label="a" type="f" corresp="#s8:l1">houwen</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Ofmen malcander winnen <rhyme label="b" type="m" corresp="#s8:l2">mocht</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">De rechte Liefd’ is in haer <rhyme label="c" type="f">wercken</rhyme></l>
        <l id="s8:l6" met="4" type="-+">Lanckmoedigh en sonder <rhyme label="d" type="m">verdriet</rhyme>,</l>
        <l id="s8:l7" met="4" type="-+">En waermen dit niet can <rhyme label="c" type="f" corresp="#s8:l5">bemercken</rhyme>,</l>
        <l id="s8:l8" met="4" type="-+">De rechte Liefd’ en isser <rhyme label="d" type="m" corresp="#s8:l6">niet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">De rechte Liefde is <rhyme label="a" type="f">ootmoedigh</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Haer selven sy niet en <rhyme label="b" type="m">behaeght</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">In crachten is is <rhyme label="a" type="f" corresp="#s9:l1">overvloedigh</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Soo dat sy alle dinck <rhyme label="b" type="m" corresp="#s9:l2">verdraeght</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Maer waermen yemandt soeckt te <rhyme label="c" type="f">dwinghen</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">En datmen om sijn selfs <rhyme label="d" type="m">geniet</rhyme>,</l>
        <l id="s9:l7" met="4" type="-+">Den swacken niet en can <rhyme label="c" type="f" corresp="#s9:l5">ghehingen</rhyme>,</l>
        <l id="s9:l8" met="4" type="-+">De rechte Liefd’ en isser <rhyme label="d" type="m" corresp="#s9:l6">niet</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">O vrienden ghy die nu moet <rhyme label="a" type="f">lyden</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Om ‘t beleven van u <rhyme label="b" type="m">ghemoet</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Wilt door ghedult u zielen <rhyme label="a" type="f" corresp="#s10:l1">vryden</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Blijft in de rechte Liefde <rhyme label="b" type="m" corresp="#s10:l2">soet</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Wilt doen met wel-doen <rhyme label="c" type="f">overwinnen</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Die u als een oncruyt <rhyme label="d" type="m">uytwiet</rhyme>,</l>
        <l id="s10:l7" met="4" type="-+">Want cont ghy sulcke niet <rhyme label="c" type="f" corresp="#s10:l5">beminnen</rhyme>,</l>
        <l id="s10:l8" met="4" type="-+">De rechte Liefd’ en isser <rhyme label="d" type="m" corresp="#s10:l6">niet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

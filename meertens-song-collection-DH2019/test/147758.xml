  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Dorre zielen <rhyme label="a" type="f">laver</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">ô Grote dode <rhyme label="a" type="f" corresp="#s1:l1">graver</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Wiens vaandel is het <rhyme label="b" type="m">Kruis</rhyme>:</l>
        <l id="s1:l4" met="3" type="-+">Uw Kerk (mag ik 't zo <rhyme label="c" type="f">noemen</rhyme>)</l>
        <l id="s1:l5" met="3" type="-+">Of zonder te <rhyme label="c" type="f" corresp="#s1:l4">verbloemen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">'k Zegt eer een <rhyme label="b" type="m" corresp="#s1:l3">Knekel-huis</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Is op-gepropt van <rhyme label="a" type="f">schonken</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Die over lang al <rhyme label="a" type="f" corresp="#s2:l1">stonken</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Vermollemt en <rhyme label="b" type="m">verrot</rhyme>:</l>
        <l id="s2:l4" met="3" type="-+">Vergeefs is al u <rhyme label="c" type="f">snoejen</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Dor hout en wil niet <rhyme label="c" type="f" corresp="#s2:l4">groejen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Geen dode Wyn-stok <rhyme label="b" type="m" corresp="#s2:l3">bot</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Maar dit is te <rhyme label="a" type="f">bewenen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Dat deze stapel <rhyme label="a" type="f" corresp="#s3:l1">benen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Zegt datze levend' <rhyme label="b" type="m">is</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Gezont en wel te <rhyme label="c" type="f">passe</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">ô Stof, ô gruis, ô <rhyme label="c" type="f" corresp="#s3:l4">asse</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Gy ziet de waarheit <rhyme label="b" type="m" corresp="#s3:l3">mis</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">ô Benen, stenen, <rhyme label="a" type="f">zerken</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Wel aan toont dan u <rhyme label="a" type="f" corresp="#s4:l1">werken</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Indien gy levent <rhyme label="b" type="m">zyt</rhyme>:</l>
        <l id="s4:l4" met="3" type="-+">Ag waar myn zeggen <rhyme label="c" type="f">leugen</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Wat zou ik my <rhyme label="c" type="f" corresp="#s4:l4">verheugen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Wat waar Gods volk <rhyme label="b" type="m" corresp="#s4:l3">verblyt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Wie of uw op komt <rhyme label="a" type="f">stoken</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">ô Lyveloze <rhyme label="a" type="f" corresp="#s5:l1">spoken</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Wie ist die u <rhyme label="b" type="m">beleest</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Wie lopen in u <rhyme label="c" type="f">schimmen</rhyme>?</l>
        <l id="s5:l5" met="3" type="-+">De Duivelen Gods <rhyme label="c" type="f" corresp="#s5:l4">zimmen</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">En apen van zyn <rhyme label="b" type="m" corresp="#s5:l3">Geest</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Die geest gedaalt van <rhyme label="a" type="f">bove</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Die geest van 't rein <rhyme label="a" type="f" corresp="#s6:l1">gelove</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Die Geest die levent <rhyme label="b" type="m">maakt</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">En blyft niet meer <rhyme label="c" type="f">verholen</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Als vier of hete <rhyme label="c" type="f" corresp="#s6:l4">kolen</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Die branden wat haar <rhyme label="b" type="m" corresp="#s6:l3">raakt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">De leugenaars der <rhyme label="a" type="f">hellen</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Die zeggen dat haar <rhyme label="a" type="f" corresp="#s7:l1">vellen</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Volkomen lyven <rhyme label="b" type="m">zyn</rhyme>:</l>
        <l id="s7:l4" met="3" type="-+">Zy hebben u haar <rhyme label="c" type="f">slaven</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">De ogen <rhyme label="c" type="f" corresp="#s7:l4">uit-gegraven</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">En nu trekt gy haar <rhyme label="b" type="m" corresp="#s7:l3">lyn</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">ô Jezus wort <rhyme label="a" type="f">gebeden</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">En dryft dees' <rhyme label="a" type="f" corresp="#s8:l1">onbesneden</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Eens uit u Bede <rhyme label="b" type="m">huis</rhyme>.</l>
        <l id="s8:l4" met="3" type="-+">Komt maakt geknoopte <rhyme label="c" type="f">swepen</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">En stoot met rouwe <rhyme label="c" type="f" corresp="#s8:l4">nepen</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Naar buiten dit <rhyme label="b" type="m" corresp="#s8:l3">gespuis</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Of, blaas eens op die <rhyme label="a" type="f">schonken</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">En stroit een hant vol <rhyme label="a" type="f" corresp="#s9:l1">vonken</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Op 't Kerk-hof van u <rhyme label="b" type="m">Kerk</rhyme>:</l>
        <l id="s9:l4" met="3" type="-+">Want al die bleke <rhyme label="c" type="f">doden</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Die hebben geest van <rhyme label="c" type="f" corresp="#s9:l4">noden</rhyme>:</l>
        <l id="s9:l6" met="3" type="-+">Ey Jezus toont u <rhyme label="b" type="m" corresp="#s9:l3">sterk</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Komt breekt de graven <rhyme label="a" type="f">open</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">En wilt de Lyken <rhyme label="a" type="f" corresp="#s10:l1">dopen</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Met water, vier en <rhyme label="b" type="m">geest</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Gaat been op been eerst <rhyme label="c" type="f">passen</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">En wilt het rift eerst <rhyme label="c" type="f" corresp="#s10:l4">wassen</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">En het dan zo <rhyme label="b" type="m" corresp="#s10:l3">geneest</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Uw' kragt is niet <rhyme label="a" type="f">geweken</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">ô Jezus, gantsche <rhyme label="a" type="f" corresp="#s11:l1">Beken</rhyme></l>
        <l id="s11:l3" met="3" type="-+">Trekt gy wel uit een <rhyme label="b" type="m">Rots</rhyme>.</l>
        <l id="s11:l4" met="3" type="-+">Gy komt een stok doen <rhyme label="c" type="f">bloejen</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Gy deet wel eertyts <rhyme label="c" type="f" corresp="#s11:l4">groejen</rhyme></l>
        <l id="s11:l6" met="3" type="-+">Amandels aan een <rhyme label="b" type="m" corresp="#s11:l3">knots</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Zent regen uit de <rhyme label="a" type="f">hoogte</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Uw Akker splyt van <rhyme label="a" type="f" corresp="#s12:l1">droogte</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Een yder roept op 't <rhyme label="b" type="m">meest</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Na u ô Ziele <rhyme label="c" type="f">laver</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">Komt weit ons in de <rhyme label="c" type="f" corresp="#s12:l4">klaver</rhyme></l>
        <l id="s12:l6" met="3" type="-+">Van u beloofde <rhyme label="b" type="m" corresp="#s12:l3">Geest</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

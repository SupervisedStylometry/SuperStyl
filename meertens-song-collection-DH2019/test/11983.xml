    <melody>De waarheid doet door daad en taal</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DE waerheydt doet door daet en <rhyme label="a" type="m">tael</rhyme></l>
        <l id="s1:l2" met="3" type="-+">2. Soo grooten nut de <rhyme label="b" type="f">Weerelt</rhyme>;</l>
        <l id="s1:l3" met="4" type="-+">3. Als gheest de Son aen 's Hemels <rhyme label="a" type="m" corresp="#s1:l1">zael</rhyme></l>
        <l id="s1:l4" met="3" type="-+">4. Met Gouden glants <rhyme label="b" type="f" corresp="#s1:l2">bepeerelt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">By waerheyt vintmen gheen <rhyme label="a" type="m">onrecht</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Gheen aensien der <rhyme label="b" type="f">persoonen</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Sy sal soo wel de Heer als <rhyme label="a" type="m" corresp="#s2:l1">knecht</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Nae haer verdiensten <rhyme label="b" type="f" corresp="#s2:l2">loonen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Sy neemt gheen giften aen of <rhyme label="a" type="m">gheldt</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Om recht tot krom te <rhyme label="b" type="f">buyghen</rhyme>.</l>
        <l id="s3:l3" met="4" type="-+">Sy vreest gheen machten noch <rhyme label="a" type="m" corresp="#s3:l1">ghewelt</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Wie kan haer slaen in <rhyme label="b" type="f" corresp="#s3:l2">duyghen</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Den hooghen Hemel gheeft haer <rhyme label="a" type="m">eer</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Met al der Engh'len <rhyme label="b" type="f">scharen</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">De Aerde valt voor haer <rhyme label="a" type="m" corresp="#s4:l1">terne'er</rhyme>:</l>
        <l id="s4:l4" met="3" type="-+">Die sijn en eertijts <rhyme label="b" type="f" corresp="#s4:l2">waren</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Neemt waerheyt wegh van 's menschen <rhyme label="a" type="m">spraeck</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Soo doet gheen nut het <rhyme label="b" type="f">spreecken</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">De spraeck sal zijn een quade <rhyme label="a" type="m" corresp="#s5:l1">saeck</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">En ons in droefheyt <rhyme label="b" type="f" corresp="#s5:l2">steecken</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Veel beeter waer het stom te <rhyme label="a" type="m">zijn</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Of als een beest te <rhyme label="b" type="f">loeyen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Als sonder waerheyt; want gheen <rhyme label="a" type="m" corresp="#s6:l1">pijn</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Of smert sou daer uyt <rhyme label="b" type="f" corresp="#s6:l2">groeyen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Wat trouw? ghelooff? wat <rhyme label="a" type="m">eenigheyt</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Kan sonder waerheydt <rhyme label="b" type="f">blijven</rhyme>?</l>
        <l id="s7:l3" met="4" type="-+">Sy doet en recht en <rhyme label="a" type="m" corresp="#s7:l1">billijckheyt</rhyme></l>
        <l id="s7:l4" met="3" type="-+">En alle dingh <rhyme label="b" type="f" corresp="#s7:l2">beklijven</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Den waren Gods-dienst kan niet <rhyme label="a" type="m">staen</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Noch oock de goede <rhyme label="b" type="f">wercken</rhyme>;</l>
        <l id="s8:l3" met="4" type="-+">Laet ghy de waerheyt van u <rhyme label="a" type="m" corresp="#s8:l1">gaen</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Of draeght ghy die ter <rhyme label="b" type="f" corresp="#s8:l2">kercken</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">God is de waerheyt, als oock <rhyme label="a" type="m">me'e</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Gods allerliefsten <rhyme label="b" type="f">Soone</rhyme>;</l>
        <l id="s9:l3" met="4" type="-+">Heeft waerheydt in u hert gheen <rhyme label="a" type="m" corresp="#s9:l1">ste'e</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">By Godt meught ghy niet <rhyme label="b" type="f" corresp="#s9:l2">woone</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Ghy meught gheen recht leerjongher <rhyme label="a" type="m">zijn</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Van Jesus, Heer der <rhyme label="b" type="f">Heeren</rhyme>:</l>
        <l id="s10:l3" met="4" type="-+">De leughen wil hy als <rhyme label="a" type="m" corresp="#s10:l1">venijn</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Dat ghy van u sult <rhyme label="b" type="f" corresp="#s10:l2">keeren</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Sijn mont ghesproocken nimmer <rhyme label="a" type="m">heeft</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Bedrogh noch <rhyme label="b" type="f">leughentale</rhyme>:</l>
        <l id="s11:l3" met="4" type="-+">Ghy raeckt, in dien ghy oock soo <rhyme label="a" type="m" corresp="#s11:l1">leeft</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Met hem in 's Hemels <rhyme label="b" type="f" corresp="#s11:l2">zale</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">De leughen gheen ghemeenschap <rhyme label="a" type="m">heeft</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Met waerheyt. Mint ghy <rhyme label="b" type="f">leughen</rhyme></l>
        <l id="s12:l3" met="4" type="-+">Den trouwen Godt noyt sulcken <rhyme label="a" type="m" corresp="#s12:l1">gheeft</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Het allervast <rhyme label="b" type="f" corresp="#s12:l2">verheughen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">'t Merckteecken, dat ghy hebben <rhyme label="a" type="m">moet</rhyme></l>
        <l id="s13:l2" met="3" type="-+">Om eeuwigh sonder <rhyme label="b" type="f">smerten</rhyme></l>
        <l id="s13:l3" met="4" type="-+">By Godt te zijn, is dat ghy <rhyme label="a" type="m" corresp="#s13:l1">doet</rhyme></l>
        <l id="s13:l4" met="3" type="-+">De waerheydt Gods van <rhyme label="b" type="f" corresp="#s13:l2">herten</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">O ! Waerheyt aller waertsten <rhyme label="a" type="m">schat</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Wat is by u te <rhyme label="b" type="f">gh'lijcken</rhyme>?</l>
        <l id="s14:l3" met="4" type="-+">Ghy hout in wesen lant en <rhyme label="a" type="m" corresp="#s14:l1">stat</rhyme></l>
        <l id="s14:l4" met="3" type="-+">En heele <rhyme label="b" type="f" corresp="#s14:l2">Coninckrijcken</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Gheluckigh is hy daer ghy <rhyme label="a" type="m">woont</rhyme>;</l>
        <l id="s15:l2" met="3" type="-+">Ghy doet hem <rhyme label="b" type="f">onderkennen</rhyme></l>
        <l id="s15:l3" met="4" type="-+">Het goet uyt quaet; en ghy hem <rhyme label="a" type="m" corresp="#s15:l1">kroont</rhyme></l>
        <l id="s15:l4" met="3" type="-+">Met loff, die gheen kan <rhyme label="b" type="f" corresp="#s15:l2">schennen</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Verborghen saecken, doet ghy <rhyme label="a" type="m">hem</rhyme></l>
        <l id="s16:l2" met="3" type="-+">Doorgronden, en recht <rhyme label="b" type="f">uyten</rhyme>.</l>
        <l id="s16:l3" met="4" type="-+">Ghy doet hem hooren nae Gods <rhyme label="a" type="m" corresp="#s16:l1">stem</rhyme>:</l>
        <l id="s16:l4" met="3" type="-+">En sonden buyten <rhyme label="b" type="f" corresp="#s16:l2">sluyten</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Ghy maeckt den sulcken Godt <rhyme label="a" type="m">ghelijck</rhyme>,</l>
        <l id="s17:l2" met="3" type="-+">En als een Godt op <rhyme label="b" type="f">Aerde</rhyme>;</l>
        <l id="s17:l3" met="4" type="-+">Ghy brengts' in Godes <rhyme label="a" type="m" corresp="#s17:l1">vreughden-rijck</rhyme>,</l>
        <l id="s17:l4" met="3" type="-+">Dat Godt voor die <rhyme label="b" type="f" corresp="#s17:l2">bewaerde</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

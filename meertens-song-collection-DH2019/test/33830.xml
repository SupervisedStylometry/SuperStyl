  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">G' Hebt d'Ouden hooren <rhyme label="a" type="f">leere</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Soo wie verlaet sijn <rhyme label="b" type="m">Vrouw</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Dat hy tot hare <rhyme label="a" type="f" corresp="#s1:l1">eere</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Een Schey-brief geeven <rhyme label="b" type="m" corresp="#s1:l2">souw</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Maer die verlaet sijn <rhyme label="a" type="f">Wijve</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Ten sy om <rhyme label="b" type="m">Hoerery</rhyme>;</l>
        <l id="s2:l3" met="3" type="-+">Doet s' overspel <rhyme label="a" type="f" corresp="#s2:l1">bedrijve</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Dus is hy geensins <rhyme label="b" type="m" corresp="#s2:l2">vry</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Die geene die 't Wijf <rhyme label="a" type="f">trouwen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Dat soo verlaten <rhyme label="b" type="m">is</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Dien moetmen voortaen <rhyme label="a" type="f" corresp="#s3:l1">houwen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Voor Overspeelder <rhyme label="b" type="m" corresp="#s3:l2">wis</rhyme>.</l>
      </lg>
    </lg>
  </text>

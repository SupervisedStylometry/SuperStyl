  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Voorwaer men moet Gods <rhyme label="a" type="m">woort</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Hooren met goet <rhyme label="a" type="m" corresp="#s1:l1">accoort</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Soo salt veel vruchten <rhyme label="b" type="f">bringhen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Devootlijck, <rhyme label="c" type="m">behoedtsaem</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Ghehoorsamich <rhyme label="c" type="m" corresp="#s1:l4">bequaem</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Goetwillich <rhyme label="b" type="f" corresp="#s1:l3">sonderlinghen</rhyme>:</l>
        <l id="s1:l7" met="3" type="-+">Wie’t nu soo hoort met <rhyme label="d" type="m">spoet</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Diens ziele  wordt <rhyme label="d" type="m" corresp="#s1:l7">ghevoet</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">De nieu Mensch <rhyme label="e" type="f">onderhouwen</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">Als t’broot het lichaem <rhyme label="f" type="m">spijst</rhyme></l>
        <l id="s1:l11" met="3" type="+-">Soo t’woordt Gods <rhyme label="f" type="m" corresp="#s1:l10">verjolijst</rhyme></l>
        <l id="s1:l12" met="3" type="-+">Die ziel in haer <rhyme label="e" type="f" corresp="#s1:l9">benouwen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Baren t’godlijcke <rhyme label="a" type="m">zaet</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Moet men hier met der <rhyme label="a" type="m" corresp="#s2:l1">daet</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">T’sal die ziel reyn gaen <rhyme label="b" type="f">maken</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En daer toe oock <rhyme label="c" type="m">vruchtbaer</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Als van den Hemel <rhyme label="c" type="m" corresp="#s2:l4">claer</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Den reghen doet <rhyme label="b" type="f" corresp="#s2:l3">ghenaken</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">En d’aerde vochtich <rhyme label="d" type="m">maeckt</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Soo wordt die ziel <rhyme label="d" type="m" corresp="#s2:l7">gheraeckt</rhyme></l>
        <l id="s2:l9" met="3" type="-+">Met Gods heylsame <rhyme label="e" type="f">leere</rhyme>,</l>
        <l id="s2:l10" met="3" type="-+">Sijn woordt ons nu <rhyme label="f" type="m">gheneest</rhyme></l>
        <l id="s2:l11" met="3" type="+-">Soo men dat claerlijck <rhyme label="f" type="m" corresp="#s2:l10">leest</rhyme>,</l>
        <l id="s2:l12" met="3" type="-+">T’is gheschiet van den <rhyme label="e" type="f" corresp="#s2:l9">Heere</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Sy vernieuwen <rhyme label="a" type="m">voorwaer</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Int leven <rhyme label="a" type="m" corresp="#s3:l1">openbaer</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Die nu Gods woorden <rhyme label="b" type="f">reyne</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">In haer herte <rhyme label="c" type="m">ontfaen</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Des Heeren soet <rhyme label="c" type="m" corresp="#s3:l4">vermaen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Die levende <rhyme label="b" type="f" corresp="#s3:l3">fonteyne</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">T’dringht deur in sijn <rhyme label="d" type="m">bedrijf</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Tot het scheydt ziel en <rhyme label="d" type="m" corresp="#s3:l7">lijf</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">T’herte doet het <rhyme label="e" type="f">ontsincken</rhyme>,</l>
        <l id="s3:l10" met="3" type="-+">Maeckt dat aen elcken <rhyme label="f" type="m">cant</rhyme></l>
        <l id="s3:l11" met="3" type="+-">Gantsch vyerich in den <rhyme label="f" type="m" corresp="#s3:l10">brant</rhyme>,</l>
        <l id="s3:l12" met="3" type="-+">En die coelte <rhyme label="e" type="f" corresp="#s3:l9">versincken</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">T’vermorw’t die herten <rhyme label="a" type="m">haert</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Verstrijdtse <rhyme label="a" type="m" corresp="#s4:l1">onghespaert</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Dat water-vlieten <rhyme label="b" type="f">vloeyen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Deur het woordt Gods <rhyme label="c" type="m">ghehoort</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Comen die tranen <rhyme label="c" type="m" corresp="#s4:l4">voort</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Weemoedicheyt [...] <rhyme label="b" type="f" corresp="#s4:l3">spoeyen</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">T’woordt Gods ons hier <rhyme label="d" type="m">verlicht</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">En het gheeft goet <rhyme label="d" type="m" corresp="#s4:l7">bericht</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">T’versoeten door <rhyme label="e" type="f">belusten</rhyme>,</l>
        <l id="s4:l10" met="3" type="-+">Het wapent nu ter <rhyme label="f" type="m">tijdt</rhyme></l>
        <l id="s4:l11" met="3" type="+-">Hier in des levens <rhyme label="f" type="m" corresp="#s4:l10">strijdt</rhyme>,</l>
        <l id="s4:l12" met="3" type="-+">Tot wy comen te <rhyme label="e" type="f" corresp="#s4:l9">rusten</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Soo wy’t nu hooren <rhyme label="a" type="m">fijn</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Sullen wy salich <rhyme label="a" type="m" corresp="#s5:l1">zijn</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Ist dat wy’t wel <rhyme label="b" type="f">bewaren</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Blijft het in ons <rhyme label="c" type="m">gheplant</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Sachtmoedich met <rhyme label="c" type="m" corresp="#s5:l4">verstant</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Soo die Schrift gaet <rhyme label="b" type="f" corresp="#s5:l3">verclaren</rhyme>:</l>
        <l id="s5:l7" met="3" type="-+">Dus die ooren op <rhyme label="d" type="m">doet</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Ontfanght Gods woorden <rhyme label="d" type="m" corresp="#s5:l7">soet</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">T’ghehoor Heer wilt ons <rhyme label="e" type="f">gheven</rhyme>.</l>
        <l id="s5:l10" met="3" type="-+">En dat wy’t vroech en <rhyme label="f" type="m">laet</rhyme></l>
        <l id="s5:l11" met="3" type="+-">Nae uwen goeden <rhyme label="f" type="m" corresp="#s5:l10">raet</rhyme></l>
        <l id="s5:l12" met="3" type="-+">Te recht moghen <rhyme label="e" type="f" corresp="#s5:l9">beleven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

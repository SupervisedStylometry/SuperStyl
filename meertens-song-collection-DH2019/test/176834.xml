    <melody>Zou mijn ziel niet loven u</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Soude mijn ziel niet loven <rhyme label="a" type="m">u</rhyme>?</l>
        <l id="s1:l2" met="3" type="-+">O dy mijn Godt <rhyme label="b" type="f">ghepresen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">U o mijn Heere wil ick <rhyme label="a" type="m" corresp="#s1:l1">nu</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En altijt danckbaer <rhyme label="b" type="f" corresp="#s1:l2">wesen</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Van alle die weldaden <rhyme label="c" type="m">dijn</rhyme>:</l>
        <l id="s1:l6" met="4" type="-+">Die ghy Heere die ziele <rhyme label="c" type="m" corresp="#s1:l5">mijn</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Hebt betuycht en <rhyme label="b" type="f" corresp="#s1:l2">bewesen</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Des zy u lof <rhyme label="d" type="m">gheseyt</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Al tot in <rhyme label="d" type="m" corresp="#s1:l8">eeuwicheyt</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">O ghy mijn Godt in <rhyme label="b" type="f" corresp="#s1:l2">desen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Als mijn ziele o Heere <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Met zonden was <rhyme label="b" type="f">beladen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Ghy spraeckt tot my vrientlijck en <rhyme label="a" type="m" corresp="#s2:l1">soet</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Siet ick ben vol <rhyme label="b" type="f" corresp="#s2:l2">ghenaden</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Komt tot my en neemt gheen <rhyme label="c" type="m">respijt</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">O ziele die beladen <rhyme label="c" type="m" corresp="#s2:l5">zijt</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">En belast met <rhyme label="b" type="f" corresp="#s2:l2">misdaden</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Ick ben ‘s levens <rhyme label="d" type="m">Fonteyn</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Om u te wassen <rhyme label="d" type="m" corresp="#s2:l8">reyn</rhyme>,</l>
        <l id="s2:l10" met="3" type="-+">Komt wilt u in my <rhyme label="b" type="f" corresp="#s2:l2">baden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ick ghedacht mijne zonden <rhyme label="a" type="m">groot</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">En alle mijn <rhyme label="b" type="f">boosheden</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Van deucht soo was ick naeckt en <rhyme label="a" type="m" corresp="#s3:l1">bloot</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Van boven tot <rhyme label="b" type="f" corresp="#s3:l2">beneden</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Ick dacht op u <rhyme label="c" type="m">gherechticheyt</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Doen quam mijn ziel in druck en <rhyme label="c" type="m" corresp="#s3:l5">leyt</rhyme>:</l>
        <l id="s3:l7" met="3" type="-+">Ick vont my vol <rhyme label="b" type="f" corresp="#s3:l2">onvreden</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Mijn ziel verschrickte <rhyme label="d" type="m">seer</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Voor u mijn Godt en <rhyme label="d" type="m" corresp="#s3:l8">Heer</rhyme>,</l>
        <l id="s3:l10" met="3" type="-+">Beanghst werden mijn <rhyme label="b" type="f" corresp="#s3:l2">leden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ick truyrde seer en weende <rhyme label="a" type="m">snel</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Met een ghemoet <rhyme label="b" type="f">verslaghen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Mijn ziele die was vol <rhyme label="a" type="m" corresp="#s4:l1">gequel</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">En lach in groot <rhyme label="b" type="f" corresp="#s4:l2">vertsaghen</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Beschreyt heb ick mijn zonden <rhyme label="c" type="m">al</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Met rouwe groot en droef <rhyme label="c" type="m" corresp="#s4:l5">gheschal</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Daeghlijckx soo was mijn <rhyme label="b" type="f" corresp="#s4:l2">klaghen</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Over die zonden <rhyme label="d" type="m">mijn</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">Ick wert ter Hellen <rhyme label="d" type="m" corresp="#s4:l8">pijn</rhyme>,</l>
        <l id="s4:l10" met="3" type="-+">Ghe-oordeelt allen <rhyme label="b" type="f" corresp="#s4:l2">daghen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Als mijn ziel lach in desen <rhyme label="a" type="m">strijdt</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">In anghst ende noot <rhyme label="b" type="f">swaerlijck</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">In dijn woort vont ick breet ende <rhyme label="a" type="m" corresp="#s5:l1">wijt</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Tot troost gheschreven <rhyme label="b" type="f" corresp="#s5:l2">waerlijck</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Wilt ghelooven in Godes <rhyme label="c" type="m">Soon</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Die quam al uyt des Hemels <rhyme label="c" type="m" corresp="#s5:l5">troon</rhyme>:</l>
        <l id="s5:l7" met="3" type="-+">O ziel aenschout hem <rhyme label="b" type="f" corresp="#s5:l2">klaerlijck</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Dit is een <rhyme label="d" type="m">Medecijn</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">Om u te suyveren <rhyme label="d" type="m" corresp="#s5:l8">fijn</rhyme>,</l>
        <l id="s5:l10" met="3" type="-+">Van u zonden <rhyme label="b" type="f" corresp="#s5:l2">vervaerlijck</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Hy quam al in dit aertsche <rhyme label="a" type="m">dal</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Op dat hy sonder <rhyme label="b" type="f">falen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Voor die menschen groot van <rhyme label="a" type="m" corresp="#s6:l1">ghetal</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Sou vol-doen en <rhyme label="b" type="f" corresp="#s6:l2">betalen</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Hy vergoot sijnen bloede <rhyme label="c" type="m">root</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">En serf voor haer die bittre <rhyme label="c" type="m" corresp="#s6:l5">doot</rhyme>:</l>
        <l id="s6:l7" met="3" type="-+">Hy quam hier <rhyme label="b" type="f" corresp="#s6:l2">nederdalen</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Om door sijn lijden <rhyme label="d" type="m">reyn</rhyme>,</l>
        <l id="s6:l9" met="3" type="-+">Al te helpen <rhyme label="d" type="m" corresp="#s6:l8">ghemeyn</rhyme>,</l>
        <l id="s6:l10" met="3" type="-+">Die laghen in doots <rhyme label="b" type="f" corresp="#s6:l2">qualen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Daerom o ziel niet meer en <rhyme label="a" type="m">schreyt</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Ghelooft en wilt <rhyme label="b" type="f">vertrouwen</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">In Godes Soon die is <rhyme label="a" type="m" corresp="#s7:l1">bereyt</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Te helpen uyt <rhyme label="b" type="f" corresp="#s7:l2">benouwen</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Al die met zonden zijn <rhyme label="c" type="m">belast</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Ende in hem ghelooven <rhyme label="c" type="m" corresp="#s7:l5">vast</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Die haer ‘t quaet laten <rhyme label="b" type="f" corresp="#s7:l2">rouwen</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Die sal hy reyn <rhyme label="d" type="m">voorwaer</rhyme>,</l>
        <l id="s7:l9" met="3" type="-+">Wasschen van zonden <rhyme label="d" type="m" corresp="#s7:l8">klaer</rhyme>,</l>
        <l id="s7:l10" met="3" type="-+">Met ghenaden <rhyme label="b" type="f" corresp="#s7:l2">bedouwen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Als mijn ziel dit heeft <rhyme label="a" type="m">ghehoort</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">O ghy mijn Godt <rhyme label="b" type="f">verheven</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Sy heeft vast ghelooft aen u <rhyme label="a" type="m" corresp="#s8:l1">woort</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">En ghebetert haer <rhyme label="b" type="f" corresp="#s8:l2">leven</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Als doen hebdy o Heer met <rhyme label="c" type="m">vlijt</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Mijn zonden al ghescholden <rhyme label="c" type="m" corresp="#s8:l5">quijt</rhyme>:</l>
        <l id="s8:l7" met="3" type="-+">En hebt my hier <rhyme label="b" type="f" corresp="#s8:l2">beneven</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Vrede verzeghelt <rhyme label="d" type="m">meest</rhyme>,</l>
        <l id="s8:l9" met="3" type="-+">In ‘t hert door uwen <rhyme label="d" type="m" corresp="#s8:l8">Gheest</rhyme>,</l>
        <l id="s8:l10" met="3" type="-+">Dus moet ick u lof <rhyme label="b" type="f" corresp="#s8:l2">gheven</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">U zy lof, eer en eeuwich <rhyme label="a" type="m">prijs</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Van dijn groote <rhyme label="b" type="f">eghenaden</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">O Godt barmhertich ende <rhyme label="a" type="m" corresp="#s9:l1">wijs</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Die ghy met goeden <rhyme label="b" type="f" corresp="#s9:l2">rade</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Hebt bewesen aen my <rhyme label="c" type="m">Zondaer</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">O ghy mijn Godt Hemelsche <rhyme label="c" type="m" corresp="#s9:l5">Vaer</rhyme>:</l>
        <l id="s9:l7" met="3" type="-+">U wil ick vroegh en <rhyme label="b" type="f" corresp="#s9:l2">spade</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Loven en dancken <rhyme label="d" type="m">wijt</rhyme>,</l>
        <l id="s9:l9" met="3" type="-+">Loff zy <rhyme label="d" type="m" corresp="#s9:l8">ghebenedijt</rhyme>,</l>
        <l id="s9:l10" met="3" type="-+">Uwen naem groot van <rhyme label="b" type="f" corresp="#s9:l2">dade</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

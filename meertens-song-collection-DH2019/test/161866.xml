  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="+-">Schoone <rhyme label="a" type="m">wijn</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Door Baggus ons <rhyme label="b" type="f">gegeven</rhyme>,</l>
        <l id="s1:l3" met="2" type="+-">Ag, uw <rhyme label="b" type="f" corresp="#s1:l2">sneven</rhyme></l>
        <l id="s1:l4" met="2" type="+-">Doet ons <rhyme label="b" type="f" corresp="#s1:l2">leven</rhyme></l>
        <l id="s1:l5" met="2" type="+-">Buyten <rhyme label="a" type="m" corresp="#s1:l1">pijn</rhyme>;</l>
        <l id="s1:l6" met="2" type="+-">Want uw <rhyme label="c" type="m">bloed</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">In suyver glas <rhyme label="d" type="f">geschonken</rhyme></l>
        <l id="s1:l8" met="2" type="+-">En <rhyme label="d" type="f" corresp="#s1:l7">gedronken</rhyme>,</l>
        <l id="s1:l9" met="2" type="+-">Doet <rhyme label="d" type="f" corresp="#s1:l7">ontfonken</rhyme></l>
        <l id="s1:l10" met="2" type="+-">Ons <rhyme label="c" type="m" corresp="#s1:l6">gemoed</rhyme>;</l>
        <l id="s1:l11" met="2" type="+-">Wijl het <rhyme label="e" type="m">hert</rhyme></l>
        <l id="s1:l12" met="3" type="-+">Door uw zyn pijn kan <rhyme label="f" type="f">staken</rhyme>,</l>
        <l id="s1:l13" met="2" type="+-">Vrolijk <rhyme label="f" type="f" corresp="#s1:l12">blaken</rhyme></l>
        <l id="s1:l14" met="2" type="+-">En <rhyme label="f" type="f" corresp="#s1:l12">vermaken</rhyme>,</l>
        <l id="s1:l15" met="2" type="+-">Vry van <rhyme label="e" type="m" corresp="#s1:l11">smert</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="+-">Sa wel <rhyme label="a" type="m">aan</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Laat ons met dese <rhyme label="b" type="f">teugen</rhyme></l>
        <l id="s2:l3" met="2" type="+-">Ons <rhyme label="b" type="f" corresp="#s2:l2">verheugen</rhyme>,</l>
        <l id="s2:l4" met="2" type="+-">Ons <rhyme label="b" type="f" corresp="#s2:l2">verheugen</rhyme></l>
        <l id="s2:l5" met="2" type="+-">Nu <rhyme label="a" type="m" corresp="#s2:l1">voortaan</rhyme>.</l>
        <l id="s2:l6" met="2" type="+-">Wy gaan <rhyme label="c" type="m">voor</rhyme>:</l>
        <l id="s2:l7" met="3" type="-+">Siet hoe dees droppels <rhyme label="d" type="f">blinken</rhyme>!</l>
        <l id="s2:l8" met="2" type="+-">Ha, dit <rhyme label="d" type="f" corresp="#s2:l7">klinken</rhyme></l>
        <l id="s2:l9" met="2" type="+-">Past by 't <rhyme label="d" type="f" corresp="#s2:l7">drinken</rhyme>!</l>
        <l id="s2:l10" met="2" type="+-">Volg dit <rhyme label="c" type="m" corresp="#s2:l6">spoor</rhyme>:</l>
        <l id="s2:l11" met="2" type="+-">Schoone <rhyme label="e" type="m">wijn</rhyme>,</l>
        <l id="s2:l12" met="3" type="-+">Wild nimmer ons <rhyme label="f" type="f">begeeven</rhyme>,</l>
        <l id="s2:l13" met="2" type="+-">Wijl uw <rhyme label="f" type="f" corresp="#s2:l12">streven</rhyme></l>
        <l id="s2:l14" met="2" type="+-">Ons doet <rhyme label="f" type="f" corresp="#s2:l12">leven</rhyme></l>
        <l id="s2:l15" met="2" type="+-">Buyten <rhyme label="e" type="m" corresp="#s2:l11">pijn</rhyme>!</l>
      </lg>
    </lg>
  </text>

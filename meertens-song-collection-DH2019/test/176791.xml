  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="5" type="+-">Ghebenedijt, o mijn ziel altijt den <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s1:l2" met="5" type="-+">Looft hem, o alle mijn <rhyme label="b" type="m">inwendigheyt</rhyme>,</l>
        <l id="s1:l3" met="5" type="+-">Prijst hem met blijde lof-sanghen altijt <rhyme label="a" type="m" corresp="#s1:l1">meer</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">Die u in sijn weghen <rhyme label="b" type="m" corresp="#s1:l2">leyt</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Door sijn <rhyme label="b" type="m" corresp="#s1:l2">ghenaedicheyt</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Sijn beloften toe <rhyme label="b" type="m" corresp="#s1:l2">seyt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="5" type="+-">Maeckt groot, o mijn ziele den Heer uwen <rhyme label="a" type="m">Godt</rhyme></l>
        <l id="s2:l2" met="5" type="-+">Die u uyt Egypten tot Zyon heeft <rhyme label="b" type="m">gheleyt</rhyme>,</l>
        <l id="s2:l3" met="5" type="+-">Die u leyt tot Christo van Babels herders <rhyme label="a" type="m" corresp="#s2:l1">sot</rhyme></l>
        <l id="s2:l4" met="3" type="+-">In Israels groene <rhyme label="b" type="m" corresp="#s2:l2">weyt</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Van Babels dorre <rhyme label="b" type="m" corresp="#s2:l2">heyt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">O ziel sijn lof <rhyme label="b" type="m" corresp="#s2:l2">verbreyt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="5" type="+-">Hoe sout ghy (o ziel) niet loven sulcken <rhyme label="a" type="m">Heer</rhyme></l>
        <l id="s3:l2" met="5" type="-+">Die u van den doot ten leven heeft <rhyme label="b" type="m">gebrocht</rhyme></l>
        <l id="s3:l3" met="5" type="+-">Die u gheleyt heeft door dat roode <rhyme label="a" type="m" corresp="#s3:l1">Meer</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">Doen ghy dwaelden, weder <rhyme label="b" type="m" corresp="#s3:l2">socht</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Met sijnen bloet <rhyme label="b" type="m" corresp="#s3:l2">ghekocht</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Doen Pharao u <rhyme label="b" type="m" corresp="#s3:l2">bevocht</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="5" type="+-">Looft onsen Godt met Mose o mijn <rhyme label="a" type="m">ziel</rhyme>,</l>
        <l id="s4:l2" met="5" type="-+">Die u tot sijn heylige wooninge heeft <rhyme label="b" type="m">gebragt</rhyme></l>
        <l id="s4:l3" met="5" type="+-">De Pharao met ros en waghens <rhyme label="a" type="m" corresp="#s4:l1">overviel</rhyme>,</l>
        <l id="s4:l4" met="3" type="+-">In ‘t roode Meyr omwierp met <rhyme label="b" type="m" corresp="#s4:l2">kracht</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Doen hy vervolchde <rhyme label="b" type="m" corresp="#s4:l2">onsacht</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Dat Israels <rhyme label="b" type="m" corresp="#s4:l2">gheslacht</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="5" type="+-">Mijn ziel looft den Heer al u leven <rhyme label="a" type="m">lank</rhyme>,</l>
        <l id="s5:l2" met="5" type="-+">Looft hem met herpen ende met <rhyme label="b" type="m">snaren-spel</rhyme>,</l>
        <l id="s5:l3" met="5" type="+-">De heyligen in Zyon loven hem met <rhyme label="a" type="m" corresp="#s5:l1">sanck</rhyme>,</l>
        <l id="s5:l4" met="3" type="+-">Oock ghy Borghers <rhyme label="b" type="m" corresp="#s5:l2">Israel</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Want in ‘t Helsche <rhyme label="b" type="m" corresp="#s5:l2">ghequel</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Hem niemant loven <rhyme label="b" type="m" corresp="#s5:l2">sel</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="5" type="+-">Looft desen God, o gy Herders van <rhyme label="a" type="m">Zyon</rhyme></l>
        <l id="s6:l2" met="5" type="-+">Looft hem o alle sijn knechten groot en <rhyme label="b" type="m">kleyn</rhyme></l>
        <l id="s6:l3" met="5" type="+-">Looft hem, o alle sijn hantwercken <rhyme label="a" type="m" corresp="#s6:l1">schoon</rhyme>,</l>
        <l id="s6:l4" met="3" type="+-">Princepael, o Zyon <rhyme label="b" type="m" corresp="#s6:l2">greyn</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Ghy zijt Gods Bruyt <rhyme label="b" type="m" corresp="#s6:l2">alleyn</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">O kleyn vergaderingh’ <rhyme label="b" type="m" corresp="#s6:l2">reyn</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="5" type="+-">O Godt u lof is u ghemeynte <rhyme label="a" type="m">alleen</rhyme></l>
        <l id="s7:l2" met="5" type="-+">Ten is niet schoon in der Zondaren <rhyme label="b" type="m">mont</rhyme>,</l>
        <l id="s7:l3" met="5" type="+-">U woort is alleen in Ierusalem <rhyme label="a" type="m" corresp="#s7:l1">reen</rhyme>,</l>
        <l id="s7:l4" met="3" type="+-">U Wet men in Zyon <rhyme label="b" type="m" corresp="#s7:l2">vont</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Quijtscheldingh’ van <rhyme label="b" type="m" corresp="#s7:l2">zondt</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Als men van ‘t quaet <rhyme label="b" type="m" corresp="#s7:l2">afstont</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="5" type="+-">Wie soude alsulken Godt niet lovedn <rhyme label="a" type="m">vro</rhyme>?</l>
        <l id="s8:l2" met="5" type="-+">Die Daniel v’list heeft uyt der leeuwen <rhyme label="b" type="m">mont</rhyme></l>
        <l id="s8:l3" met="5" type="+-">Die met Sadrach, Mesag, en <rhyme label="a" type="m" corresp="#s8:l1">Abbednego</rhyme>,</l>
        <l id="s8:l4" met="3" type="+-">In den gloeyende Oven <rhyme label="b" type="m" corresp="#s8:l2">stont</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Dat de vlam haer niet <rhyme label="b" type="m" corresp="#s8:l2">verslont</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Gheen brant men aen haer <rhyme label="b" type="m" corresp="#s8:l2">vont</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="5" type="+-">Prijst Godt, o Ierusalem en Zyon <rhyme label="a" type="m">teer</rhyme></l>
        <l id="s9:l2" met="5" type="-+">Die u deuren vast met grendelen <rhyme label="b" type="m">bewaert</rhyme>,</l>
        <l id="s9:l3" met="5" type="+-">Die u muyren op bout, die daer lagen <rhyme label="a" type="m" corresp="#s9:l1">neer</rhyme>,</l>
        <l id="s9:l4" met="3" type="+-">Die den verstroyden <rhyme label="b" type="m" corresp="#s9:l2">vergaert</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Die om sijn Naem <rhyme label="b" type="m" corresp="#s9:l2">vermaert</rhyme>.</l>
        <l id="s9:l6" met="3" type="-+">Te Babel ghevaen <rhyme label="b" type="m" corresp="#s9:l2">vaert</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="5" type="+-">Looft Godt die in sijn heyligen Tempel <rhyme label="a" type="m">woont</rhyme></l>
        <l id="s10:l2" met="5" type="-+">Hy is een al te vriendelijcken <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s10:l3" met="5" type="+-">Looft hem, die sijn uyt-verkoorne <rhyme label="a" type="m" corresp="#s10:l1">kroont</rhyme>,</l>
        <l id="s10:l4" met="3" type="+-">Die haer vroom stelden ter <rhyme label="b" type="m" corresp="#s10:l2">weer</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Een eeuwich <rhyme label="b" type="m" corresp="#s10:l2">tryumpheer</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Gheeft hy, die houdt sijn <rhyme label="b" type="m" corresp="#s10:l2">Leer</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="5" type="+-">Gy Hemelen, gy Aerde, Godt doch den prijs <rhyme label="a" type="m">geeft</rhyme>.</l>
        <l id="s11:l2" met="5" type="-+">Looft hem ghy Heydenen die op der aerden <rhyme label="b" type="m">zijn</rhyme></l>
        <l id="s11:l3" met="5" type="+-">Het love hem al wat Aedem <rhyme label="a" type="m" corresp="#s11:l1">heeft</rhyme>,</l>
        <l id="s11:l4" met="3" type="+-">Sonne, Mane, Sterren <rhyme label="b" type="m" corresp="#s11:l2">fijn</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Lovet Godt met helder <rhyme label="b" type="m" corresp="#s11:l2">schijn</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Dat zijn de wercken <rhyme label="b" type="m" corresp="#s11:l2">dijn</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="5" type="+-">O Godt laet mijn ziel leven, datse u loven <rhyme label="a" type="m">magh</rhyme></l>
        <l id="s12:l2" met="5" type="-+">Laet u lof van mijn lippen zijn <rhyme label="b" type="m">vertelt</rhyme>,</l>
        <l id="s12:l3" met="5" type="+-">Op dat ick mach staen blijven in den boosen <rhyme label="a" type="m" corresp="#s12:l1">dag</rhyme></l>
        <l id="s12:l4" met="3" type="+-">Als dat Elemente <rhyme label="b" type="m" corresp="#s12:l2">smelt</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">Heylich moeten wy zijn <rhyme label="b" type="m" corresp="#s12:l2">ghestelt</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Gheen onschult daer aen <rhyme label="b" type="m" corresp="#s12:l2">ghelt</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="5" type="+-">Ghy Princen en Heeren Reghents der <rhyme label="a" type="m">duysternis</rhyme></l>
        <l id="s13:l2" met="5" type="-+">Lovet Godt die u ‘t sweert der Iusticien heeft <rhyme label="b" type="m">ghedaen</rhyme>,</l>
        <l id="s13:l3" met="5" type="+-">Lovet hem die een Heer over u Vorsten <rhyme label="a" type="m" corresp="#s13:l1">is</rhyme>,</l>
        <l id="s13:l4" met="3" type="+-">Leert den goeden voor te <rhyme label="b" type="m" corresp="#s13:l2">staen</rhyme>,</l>
        <l id="s13:l5" met="3" type="-+">Straft den quaet-doenders <rhyme label="b" type="m" corresp="#s13:l2">saen</rhyme>,</l>
        <l id="s13:l6" met="3" type="-+">Daerom hebdy ‘t swaert <rhyme label="b" type="m" corresp="#s13:l2">ontfaen</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="5" type="+-">O Prince Godt, Heere alder Heeren <rhyme label="a" type="m">Heer</rhyme></l>
        <l id="s14:l2" met="5" type="-+">Ghebenedijt moet gy in der eeuwicheyt <rhyme label="b" type="m">zijn</rhyme>,</l>
        <l id="s14:l3" met="5" type="+-">Die ‘t licht in duysternis laet schijnen <rhyme label="a" type="m" corresp="#s14:l1">neer</rhyme>,</l>
        <l id="s14:l4" met="3" type="+-">Die waren in doodes <rhyme label="b" type="m" corresp="#s14:l2">pijn</rhyme>,</l>
        <l id="s14:l5" met="3" type="-+">Gaeft ghy dit helder <rhyme label="b" type="m" corresp="#s14:l2">schijn</rhyme>,</l>
        <l id="s14:l6" met="3" type="-+">Looft Godt. o ziele <rhyme label="b" type="m" corresp="#s14:l2">mijn</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

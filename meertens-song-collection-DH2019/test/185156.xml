    <tags/>
    <melody>Ik ging nog hedenmorgen</melody>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Ick ben op deser <rhyme label="a" type="f">eerden</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Mijns heeren <rhyme label="b" type="m">instrument</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Een vaetjen cleyn van <rhyme label="a" type="f" corresp="#s1:l1">weerden</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">By hem alleen <rhyme label="b" type="m" corresp="#s1:l2">bekent</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">In alles wat hy my <rhyme label="b" type="m" corresp="#s1:l2">toesent</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Daer in wil ick <rhyme label="a" type="f" corresp="#s1:l1">volheerden</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Tot dat hy ‘t omme <rhyme label="b" type="m" corresp="#s1:l2">went</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Want ick weet van te <rhyme label="a" type="f">vooren</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Dat hy niet toe en <rhyme label="b" type="m">laet</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Of ‘t sal also <rhyme label="a" type="f" corresp="#s2:l1">behooren</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">In sijn ghetal en <rhyme label="b" type="m" corresp="#s2:l2">maat</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Hoe wel het na den ooghen <rhyme label="b" type="m" corresp="#s2:l2">gaat</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Als of ick waer <rhyme label="a" type="f" corresp="#s2:l1">verlooren</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">By Godt het anders <rhyme label="b" type="m" corresp="#s2:l2">staet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Mijn gangen en mijn <rhyme label="a" type="f">weghen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Die staen in sijnder <rhyme label="b" type="m">macht</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">‘t Is in my niet <rhyme label="a" type="f" corresp="#s3:l1">gheleghen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Hoe die werden <rhyme label="b" type="m" corresp="#s3:l2">volbracht</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Want soo hy op my niet en <rhyme label="b" type="m" corresp="#s3:l2">acht</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">In alle mijn <rhyme label="a" type="f" corresp="#s3:l1">bejeghen</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Vergeefs houd’ ick de <rhyme label="b" type="m" corresp="#s3:l2">wacht</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Mijn innerlijcke <rhyme label="a" type="f">crachten</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Staen onder sijn <rhyme label="b" type="m">ghebiet</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Mijn woorden en <rhyme label="a" type="f" corresp="#s4:l1">ghedachten</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Ghestadigh hy <rhyme label="b" type="m" corresp="#s4:l2">aensiet</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Gheen ongheval nergens <rhyme label="b" type="m" corresp="#s4:l2">gheschiet</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Buyten sijn wil en <rhyme label="a" type="f" corresp="#s4:l1">achten</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Selfs oock den diertjens <rhyme label="b" type="m" corresp="#s4:l2">niet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Sijn vaderlijcke <rhyme label="a" type="f">minne</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Sijn Goddelijck <rhyme label="b" type="m">beleyt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Heeft my van <rhyme label="a" type="f" corresp="#s5:l1">aenbeginne</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Gheschapen en <rhyme label="b" type="m" corresp="#s5:l2">bereyt</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Niet om te laten in <rhyme label="b" type="m" corresp="#s5:l2">ydelheyt</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Maer recht na sijnen <rhyme label="a" type="f" corresp="#s5:l1">sinne</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Tot sijnder <rhyme label="b" type="m" corresp="#s5:l2">heerlijckheyt</rhyme>,</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Om in ‘t hemelsche <rhyme label="a" type="f">wesen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Eeuwigh by hem te <rhyme label="b" type="m">sijn</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Aldaer hy wort <rhyme label="a" type="f" corresp="#s6:l1">ghepresen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Van d’Edel <rhyme label="b" type="m" corresp="#s6:l2">Seraphijn</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Met lieffelijcke ghesangen <rhyme label="b" type="m" corresp="#s6:l2">fijn</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Aenschouwende by <rhyme label="a" type="f" corresp="#s6:l1">desen</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Sijn heyligh soet <rhyme label="b" type="m" corresp="#s6:l2">aenschijn</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Ghelijck hy is in <rhyme label="a" type="f">waerheyt</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Wert hy ghesien van <rhyme label="b" type="m">my</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Mijn lichaem sijnd’ in <rhyme label="a" type="f" corresp="#s7:l1">claerheyt</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Blinckende schoon als <rhyme label="b" type="m" corresp="#s7:l2">hy</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Op dat ick altijt by hem <rhyme label="b" type="m" corresp="#s7:l2">sy</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Bevrijt van alle <rhyme label="a" type="f" corresp="#s7:l1">swaerheyt</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">In soete <rhyme label="b" type="m" corresp="#s7:l2">Melody</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Hier na staet mijn <rhyme label="a" type="f">verlanghen</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Ghelijck een dorstigh <rhyme label="b" type="m">hert</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Maer ick cant niet <rhyme label="a" type="f" corresp="#s8:l1">ontfanghen</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Eert my ghegeven <rhyme label="b" type="m" corresp="#s8:l2">wert</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Hierom mijn ziel in hem <rhyme label="b" type="m" corresp="#s8:l2">volhert</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Ick beveel hem mijn <rhyme label="a" type="f" corresp="#s8:l1">gangen</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">In droefheyt en in <rhyme label="b" type="m" corresp="#s8:l2">smert</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Ick ben soo wel te <rhyme label="a" type="f">vreden</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">In als wat hy my <rhyme label="b" type="m">doet</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Al lyden mijne <rhyme label="a" type="f" corresp="#s9:l1">leden</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Ghetroost is mijn <rhyme label="b" type="m" corresp="#s9:l2">gemoet</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Ick weet hy meynet met my soo <rhyme label="b" type="m" corresp="#s9:l2">goet</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Als ick ben deur <rhyme label="a" type="f" corresp="#s9:l1">ghestreden</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Het eynde is so <rhyme label="b" type="m" corresp="#s9:l2">soet</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Den Autheur van der <rhyme label="a" type="f">saken</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Weet best hoe hy ‘t <rhyme label="b" type="m">begeert</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Hy sal het pat wel <rhyme label="a" type="f" corresp="#s10:l1">maken</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Dat tot zijn rijcke <rhyme label="b" type="m" corresp="#s10:l2">keert</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Ist dat my kruys en lyden <rhyme label="b" type="m" corresp="#s10:l2">deert</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">My selven te <rhyme label="a" type="f" corresp="#s10:l1">versaken</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Heb ick van hem <rhyme label="b" type="m" corresp="#s10:l2">geleert</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">JOb die droech oock met <rhyme label="a" type="m">gedult</rhyme>,</l>
        <l id="s1:l2" met="2" type="+-">Sonder <rhyme label="a" type="m" corresp="#s1:l1">schult</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">'t Kruys, hem opgeleydt van <rhyme label="b" type="f">Goode</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Doen hem, van den Duyvel, <rhyme label="c" type="m">werdt</rhyme>,</l>
        <l id="s1:l5" met="2" type="+-">Groote <rhyme label="c" type="m" corresp="#s1:l4">smert</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Aengedaen gelijck de <rhyme label="b" type="f" corresp="#s1:l3">snoode</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Doen hy wert berooft van <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s2:l2" met="2" type="+-">Huys, en <rhyme label="a" type="m" corresp="#s2:l1">bloed</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">En van Vee, seer <rhyme label="b" type="f">menigvuldig</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Droech hy, als een Kristen <rhyme label="c" type="m">moet</rhyme>,</l>
        <l id="s2:l5" met="2" type="+-">In <rhyme label="c" type="m" corresp="#s2:l4">rampspoet</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">En in armoed 't Kruys <rhyme label="b" type="f" corresp="#s2:l3">geduldig</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Daer nae gaff hem Godt de <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s3:l2" met="2" type="+-">Oock veel <rhyme label="a" type="m" corresp="#s3:l1">meer</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Goed, als in sijn eerste <rhyme label="b" type="f">dagen</rhyme>;</l>
        <l id="s3:l4" met="4" type="+-">'k Segh noch eenmael, voor het <rhyme label="c" type="m">lest</rhyme>,</l>
        <l id="s3:l5" met="2" type="+-">Het is <rhyme label="c" type="m" corresp="#s3:l4">best</rhyme></l>
        <l id="s3:l6" met="4" type="+-">In sijn armoed, kruys te <rhyme label="b" type="f" corresp="#s3:l3">dragen</rhyme>.</l>
      </lg>
    </lg>
  </text>

<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>24561</id>
    <date>
      <year-start>1476</year-start>
      <year-end>1500</year-end>
    </date>
    <tags>
      <tag standard-name="gebedslied" translation="prayer">gebedslied</tag>
      <tag standard-name="avondlied" translation="evening song">avondlied</tag>
    </tags>
    <melody>Christe qui lux es et dies</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Cryste du byste licht ende <rhyme label="a" type="m">dach</rhyme></l>
        <l id="s1:l2" met="4" type="-+">voer di sich nyemant verborgen en <rhyme label="a" type="m" corresp="#s1:l1">mach</rhyme></l>
        <l id="s1:l3" met="4" type="-+">een licht van licht men di <rhyme label="b" type="m">verstaet</rhyme></l>
        <l id="s1:l4" met="4" type="-+">een salich licht gi ons <rhyme label="b" type="m" corresp="#s1:l3">verclaert</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ick bidde di hilige <rhyme label="a" type="m">here</rhyme></l>
        <l id="s2:l2" met="4" type="-+">di in deser nacht behoede <rhyme label="a" type="m" corresp="#s2:l1">my</rhyme></l>
        <l id="s2:l3" met="4" type="-+">in di soe sydie ruste <rhyme label="b" type="m">myn</rhyme></l>
        <l id="s2:l4" met="4" type="-+">laet ons desen nacht in vreden <rhyme label="b" type="m" corresp="#s2:l3">syn</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Verdryft des swaren slapes <rhyme label="a" type="m">vrijst</rhyme></l>
        <l id="s3:l2" met="4" type="-+">geeft ons te ontgaen des viandes <rhyme label="a" type="m" corresp="#s3:l1">lyst</rhyme></l>
        <l id="s3:l3" met="4" type="-+">dat vleysche dat suuer ende reyne <rhyme label="b" type="m">sy</rhyme></l>
        <l id="s3:l4" met="4" type="-+">soe stae wy sware sorgen <rhyme label="b" type="m" corresp="#s3:l3">vry</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Nv slapet oghe sonder <rhyme label="a" type="m">leyt</rhyme></l>
        <l id="s4:l2" met="4" type="-+">dat herte waket in <rhyme label="a" type="m" corresp="#s4:l1">stedicheit</rhyme></l>
        <l id="s4:l3" met="4" type="-+">bescherme ons gades rechter <rhyme label="b" type="m">hant</rhyme></l>
        <l id="s4:l4" met="4" type="-+">verloest ons vander sonden <rhyme label="b" type="m" corresp="#s4:l3">bant</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Beschermer alre <rhyme label="a" type="m">kerstenheit</rhyme></l>
        <l id="s5:l2" met="4" type="-+">din hulpe sterck sy ons <rhyme label="a" type="m" corresp="#s5:l1">bereyt</rhyme></l>
        <l id="s5:l3" met="4" type="-+">nv helpet ons here wt alre <rhyme label="b" type="m">noet</rhyme></l>
        <l id="s5:l4" met="4" type="-+">doer din hilige wyf wonden <rhyme label="b" type="m" corresp="#s5:l3">roet</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ghedencke here der swaere <rhyme label="a" type="m">tyt</rhyme></l>
        <l id="s6:l2" met="4" type="-+">die inden liue geuangen <rhyme label="a" type="m" corresp="#s6:l1">licht</rhyme></l>
        <l id="s6:l3" met="4" type="-+">der zielen die du heueste <rhyme label="b" type="m">verloest</rhyme></l>
        <l id="s6:l4" met="4" type="-+">doer geuet lieue here  uwen ewigen <rhyme label="b" type="m" corresp="#s6:l3">troest</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Des vaders cracht des sones <rhyme label="a" type="m">list</rhyme></l>
        <l id="s7:l2" met="4" type="-+">des hiligen gheestes guede <rhyme label="a" type="m" corresp="#s7:l1">gonst</rhyme></l>
        <l id="s7:l3" met="4" type="-+">hebt lof ende eer ende <rhyme label="b" type="m">weerdicheit</rhyme></l>
        <l id="s7:l4" met="4" type="-+">doer dyn ongemeten <rhyme label="b" type="m" corresp="#s7:l3">ewicheit</rhyme></l>
      </lg>
    </lg>
  </text>
</song>

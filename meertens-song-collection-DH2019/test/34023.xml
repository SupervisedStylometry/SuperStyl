  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">KOm alle <rhyme label="a" type="f">creatueren</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Met jammerlijk <rhyme label="b" type="m">gevaer</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">En steldt u nu tot <rhyme label="a" type="f" corresp="#s1:l1">trueren</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En maekt togh groot <rhyme label="b" type="m" corresp="#s1:l2">misbaer</rhyme>!</l>
        <l id="s1:l5" met="4" type="-+">Want Godes Soone wordt <rhyme label="c" type="m">geleydt</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Ter doodt op deeser <rhyme label="a" type="f" corresp="#s1:l1">ueren</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">O groot <rhyme label="c" type="m" corresp="#s1:l5">afgrijslijkheydt</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">2.Sy doen hem uyt sijn <rhyme label="a" type="f">kleeren</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Met ongenade <rhyme label="b" type="m">stijf</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Vernieuwen soo sijn <rhyme label="a" type="f" corresp="#s2:l1">seeren</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Van sijn gewonde <rhyme label="b" type="m" corresp="#s2:l2">lijf</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Dus wordt hy weer van bloede <rhyme label="c" type="m">roodt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Sijn pijnen soo <rhyme label="a" type="f" corresp="#s2:l1">vermeeren</rhyme>.</l>
        <l id="s2:l7" met="3" type="-+">O jammerlijke <rhyme label="c" type="m" corresp="#s2:l5">noodt</rhyme>?</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Siet hoe dees wreede <rhyme label="a" type="f">knechten</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Met nagelen seer <rhyme label="b" type="m">hart</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Hem aen het Kruysse <rhyme label="a" type="f" corresp="#s3:l1">heghten</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Met onlijdlijke <rhyme label="b" type="m" corresp="#s3:l2">smart</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Hy wordt gespannen als een <rhyme label="c" type="m">boogh</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Ogh, nu gaen sy <rhyme label="a" type="f" corresp="#s3:l1">oprechten</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Hem met het Kruys om <rhyme label="c" type="m" corresp="#s3:l5">hoogh</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Waer heeft men oyt soo <rhyme label="a" type="f">snooden</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Een tyranny <rhyme label="b" type="m">bedoght</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Als deese boose <rhyme label="a" type="f" corresp="#s4:l1">Jooden</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Uyt haet hebben <rhyme label="b" type="m" corresp="#s4:l2">gewrocht</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Den Soone van den waren <rhyme label="c" type="m">Godt</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Met schandt en pijn te <rhyme label="a" type="f" corresp="#s4:l1">dooden</rhyme>!</l>
        <l id="s4:l7" met="3" type="-+">Nogh houden sy de <rhyme label="c" type="m" corresp="#s4:l5">spot</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Maer gy, o lieve <rhyme label="a" type="f">Vrouwe</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Bedrukte Moeder <rhyme label="b" type="m">Goodts</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Hoe groot is uwen <rhyme label="a" type="f" corresp="#s5:l1">rouwe</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Meer als de pijn des <rhyme label="b" type="m" corresp="#s5:l2">doodts</rhyme>!</l>
        <l id="s5:l5" met="4" type="-+">Hoe waer is <rhyme label="c" type="m">gepropheteert</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Dat uw hart worden <rhyme label="a" type="f" corresp="#s5:l1">souwe</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Doorsneden van een <rhyme label="c" type="m" corresp="#s5:l5">sweert</rhyme>.</l>
      </lg>
    </lg>
  </text>

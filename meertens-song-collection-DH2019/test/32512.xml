  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">EEn goy Vrou dat is een <rhyme label="a" type="f">crooningh</rhyme></l>
        <l id="s1:l2" met="4" type="+-">En een glori voor den <rhyme label="b" type="m">Man</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Een Ã§iraet in haere <rhyme label="a" type="f" corresp="#s1:l1">wooningh</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Die haer best doet, waer sy <rhyme label="b" type="m" corresp="#s1:l2">kan</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Een schoon Peirel inde <rhyme label="c" type="f">wegen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">En heel vreughdigh om te <rhyme label="d" type="m">sien</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Die maeckt haeren Man <rhyme label="c" type="f" corresp="#s1:l5">genegen</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Om sijn Vrauwe lust te <rhyme label="d" type="m" corresp="#s1:l6">bien</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">s' Is gelijck den Gulden <rhyme label="a" type="f">regen</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Over heel haer <rhyme label="b" type="m">Huys-gesin</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Daer den Goddelijcken <rhyme label="a" type="f" corresp="#s2:l1">zegen</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Mede werckt tot haer <rhyme label="b" type="m" corresp="#s2:l2">gewin</rhyme>:</l>
        <l id="s2:l5" met="4" type="+-">Als-men haer wilt <rhyme label="c" type="f">over-tieren</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Eer het eerst-mael komt op <rhyme label="d" type="m">straet</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Soo antwoordt sy met <rhyme label="c" type="f" corresp="#s2:l5">manieren</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Inde <rhyme label="d" type="m" corresp="#s2:l6">rechte-middel-maet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Met haer soete wyse <rhyme label="a" type="f">reden</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">En haer vrindelijck <rhyme label="b" type="m">accoort</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Stelt sy haeren Man te <rhyme label="a" type="f" corresp="#s3:l1">vreden</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Als hy is op haer <rhyme label="b" type="m" corresp="#s3:l2">gestoort</rhyme>;</l>
        <l id="s3:l5" met="4" type="+-">Met haer Minnelijck <rhyme label="c" type="f">aen-spreken</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Soet gelaet, aen jder <rhyme label="d" type="m">een</rhyme></l>
        <l id="s3:l7" met="4" type="+-">Kan sy twist, en toren <rhyme label="c" type="f" corresp="#s3:l5">breken</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">En al-soo met vrindt-schap <rhyme label="d" type="m" corresp="#s3:l6">scheen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Onderdaenigh, en <rhyme label="a" type="f">goethertigh</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Is een goy Vrau haeren <rhyme label="b" type="m">Heer</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Die bedeckt, al is 't haer <rhyme label="a" type="f" corresp="#s4:l1">smertigh</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Haer Mans faute, en <rhyme label="b" type="m" corresp="#s4:l2">on-eer</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">En het woordt van hem <rhyme label="c" type="f">bewaeren</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Heus, in haere tael <rhyme label="d" type="m">correckt</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">En noyt in sijn reden <rhyme label="c" type="f" corresp="#s4:l5">vaeren</rhyme></l>
        <l id="s4:l8" met="4" type="+-">Als wanneer hy wat <rhyme label="d" type="m" corresp="#s4:l6">vertreckt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">In haer Mans verdriet, en <rhyme label="a" type="f">lijden</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Troost sy hem met <rhyme label="b" type="m">blijd'saemheyt</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Die den druck keert in t' <rhyme label="a" type="f" corresp="#s5:l1">verblijden</rhyme></l>
        <l id="s5:l4" met="4" type="+-">En verlicht <rhyme label="b" type="m" corresp="#s5:l2">swaer-moedigheyt</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">Heel sacht-moedigh van <rhyme label="c" type="f">nature</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Vlijtigh, en daer by <rhyme label="d" type="m">beleeft</rhyme>;</l>
        <l id="s5:l7" met="4" type="+-">Even blij in 't suet en 't <rhyme label="c" type="f" corresp="#s5:l5">sure</rhyme></l>
        <l id="s5:l8" met="4" type="+-">'t Gene dat den Heere <rhyme label="d" type="m" corresp="#s5:l6">geeft</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Als sy t' saemen sijn uyt <rhyme label="a" type="f">eten</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Haut haer nuchter ende <rhyme label="b" type="m">stil</rhyme>;</l>
        <l id="s6:l3" met="4" type="+-">Oft den Man hem mocht <rhyme label="a" type="f" corresp="#s6:l1">vergeten</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Door den dranck, oft geckx <rhyme label="b" type="m" corresp="#s6:l2">geschil</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Met de schroven aen te <rhyme label="c" type="f">setten</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Somwyl wat te <rhyme label="d" type="m">onbedacht</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">Dan sal sy de faut <rhyme label="c" type="f" corresp="#s6:l5">beletten</rhyme></l>
        <l id="s6:l8" met="4" type="+-">Is het immers in haer <rhyme label="d" type="m" corresp="#s6:l6">macht</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Prince wilt my helpen <rhyme label="a" type="f">prysen</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Een goy Vrouwe vol <rhyme label="b" type="m">verstant</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Weerdt haer liefde te <rhyme label="a" type="f" corresp="#s7:l1">bewysen</rhyme></l>
        <l id="s7:l4" met="4" type="+-">'tIs een Goddelijcken <rhyme label="b" type="m" corresp="#s7:l2">pant</rhyme>;</l>
        <l id="s7:l5" met="4" type="+-">En om vreught uyt deught te <rhyme label="c" type="f">raepen</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Die den stier-bol somwyl <rhyme label="d" type="m">klieft</rhyme>,</l>
        <l id="s7:l7" met="4" type="+-">Sy sal in mijn Ermkens <rhyme label="c" type="f" corresp="#s7:l5">slaepen</rhyme></l>
        <l id="s7:l8" met="4" type="+-">Als het Vrauwken maer <rhyme label="d" type="m" corresp="#s7:l6">belieft</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

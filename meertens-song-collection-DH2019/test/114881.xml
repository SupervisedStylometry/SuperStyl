  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">MEn kent de boomen aen de <rhyme label="a" type="m">vrucht</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Het recht gheloof aen goede <rhyme label="a" type="m" corresp="#s1:l1">tucht</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Die op het leven neemt <rhyme label="b" type="m">ghemerck</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Sal kennen haest de rechte <rhyme label="b" type="m" corresp="#s1:l3">Kerck</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Die sich tot 't Roomsch gheloof <rhyme label="a" type="m">bekeert</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Met goede wercken hy 't <rhyme label="a" type="m" corresp="#s2:l1">vereert</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Men siet naer meerder deucht hem <rhyme label="b" type="m">staen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">In 's Heeren vrees' hem voorder <rhyme label="b" type="m" corresp="#s2:l3">gaen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Mer wie gingh dit gheloof oot <rhyme label="a" type="m">af</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Die sich tot meerder tucht doen <rhyme label="a" type="m" corresp="#s3:l1">gaf</rhyme>?</l>
        <l id="s3:l3" met="4" type="-+">Wie tot volmaecktheydt meer <rhyme label="b" type="m">verweckt</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Daerom naer Geuse kercken <rhyme label="b" type="m" corresp="#s3:l3">treckt</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Wie heeft oot vierich in 't <rhyme label="a" type="m">ghebedt</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Sijn heer op nieuwe leer <rhyme label="a" type="m" corresp="#s4:l1">gheset</rhyme>?</l>
        <l id="s4:l3" met="4" type="-+">Wie heeft met ootmoedt Godt <rhyme label="b" type="m">ghesocht</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">En doen tot geusheydt is <rhyme label="b" type="m" corresp="#s4:l3">ghebrocht</rhyme>?</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Den vleesch-pot en de <rhyme label="a" type="m">hoveerdy</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Zijn d' oorsaeck meest van <rhyme label="a" type="m" corresp="#s5:l1">kettery</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Den Priester, die wordt <rhyme label="b" type="m">apostaet</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Haest by Geus-neef uyt vryen <rhyme label="b" type="m" corresp="#s5:l3">gaet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Wanneer de vreese Godts <rhyme label="a" type="m">vergaet</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Voor drincken, tuysschen, meerder <rhyme label="a" type="m" corresp="#s6:l1">quaedt</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Soo light men langh in sonden <rhyme label="b" type="m">doodt</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">De Bicht men laet, en 't <rhyme label="b" type="m" corresp="#s6:l3">Hemelsch-broodt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Dan wordt den duyvel haest ten <rhyme label="a" type="m">roof</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Ghegheven 't inghestort <rhyme label="a" type="m" corresp="#s7:l1">gheloof</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Dat licht hy met sijn ziel <rhyme label="b" type="m">verdrinckt</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Die altijdt op de bier-banck <rhyme label="b" type="m" corresp="#s7:l3">klinckt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">De lamp gaet uyt, de smout <rhyme label="a" type="m">ghebreckt</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">'t Licht des gheloofs oock saen <rhyme label="a" type="m" corresp="#s8:l1">vertreckt</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Als w' ons goey wercken laten <rhyme label="b" type="m">staen</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">En sonder vrees' in ondeucht <rhyme label="b" type="m" corresp="#s8:l3">staen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Ghy dan, die afgheweken <rhyme label="a" type="m">zijt</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Nemt eens ghemerck doch op den <rhyme label="a" type="m" corresp="#s9:l1">tijdt</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">En siet oft gh' op u beste <rhyme label="b" type="m">waerdt</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Doen ghy soo schandich hebt <rhyme label="b" type="m" corresp="#s9:l3">ontaerd</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Siet oft ghy Godt doen vreesden <rhyme label="a" type="m">seer</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">En voor u ziel doen sorghde <rhyme label="a" type="m" corresp="#s10:l1">meer</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Siet oft ghy kleynder in 't <rhyme label="b" type="m">ghemoedt</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Gheneghen waert tot alle <rhyme label="b" type="m" corresp="#s10:l3">goedt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Oft Godt van u meer werdt <rhyme label="a" type="m">ghedient</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Meer tot 't ghebedt ghy waert <rhyme label="a" type="m" corresp="#s11:l1">ghesint</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Oft ghy doen naer 't engh paeyken <rhyme label="b" type="m">trockt</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Oft meer tot ruymte werdt <rhyme label="b" type="m" corresp="#s11:l3">ghelockt</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Maer is 't dat ghy u wel <rhyme label="a" type="m">aensiet</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Soo vindy gheen van allen <rhyme label="a" type="m" corresp="#s12:l1">niet</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Maer wel dat ghy Godt weynich <rhyme label="b" type="m">soght</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Doen m'u tot dolingh heeft <rhyme label="b" type="m" corresp="#s12:l3">ghebrocht</rhyme>.</l>
      </lg>
    </lg>
  </text>

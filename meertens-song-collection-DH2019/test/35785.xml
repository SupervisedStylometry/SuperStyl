  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">WIlt ghy zijn Sint Lucas <rhyme label="a" type="f">vrinden</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">En dat hy uw <rhyme label="b" type="m">by-staet</rhyme>?</l>
        <l id="s1:l3" met="3" type="-+">Laet in uw' geen sonden <rhyme label="a" type="f" corresp="#s1:l1">vinden</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">In deughden oock voort <rhyme label="b" type="m" corresp="#s1:l2">gaet</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">En staet noyt <rhyme label="c" type="m">stil</rhyme>,</l>
        <l id="s1:l6" met="2" type="-+">Hebt geen <rhyme label="c" type="m" corresp="#s1:l5">verschil</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Uw' sinnen buyght, na Godes <rhyme label="c" type="m" corresp="#s1:l5">wil</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Voor ons alle wilt <rhyme label="a" type="f">verwerven</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Luca <rhyme label="b" type="m">Euangelist</rhyme>;</l>
        <l id="s2:l3" met="3" type="-+">Sinnen al, en wil te <rhyme label="a" type="f" corresp="#s2:l1">sterven</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Te leven sonder <rhyme label="b" type="m" corresp="#s2:l2">twist</rhyme>:</l>
        <l id="s2:l5" met="2" type="-+">Dat wy zijn <rhyme label="c" type="m">kleyn</rhyme>,</l>
        <l id="s2:l6" met="2" type="-+">En voor Godt <rhyme label="c" type="m" corresp="#s2:l5">reyn</rhyme>;</l>
        <l id="s2:l7" met="4" type="-+">En krijght voor ons 't schoon Hemels <rhyme label="c" type="m" corresp="#s2:l5">pleyn</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Noch wy allegaer uw' <rhyme label="a" type="f">bidden</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Luca onse <rhyme label="b" type="m">Patroon</rhyme>?</l>
        <l id="s3:l3" met="3" type="-+">Ey! staet tusschen ons in 't <rhyme label="a" type="f" corresp="#s3:l1">midden</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En tusschen Godes <rhyme label="b" type="m" corresp="#s3:l2">Soon</rhyme></l>
        <l id="s3:l5" met="2" type="-+">In onse <rhyme label="c" type="m">noodt</rhyme>,</l>
        <l id="s3:l6" met="2" type="-+">En in de <rhyme label="c" type="m" corresp="#s3:l5">doodt</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Toont aen ons dese liefde <rhyme label="c" type="m" corresp="#s3:l5">groot</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">U Iesu wy alle <rhyme label="a" type="f">smeecken</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Gheeft ons doch <rhyme label="b" type="m">allegaer</rhyme>:</l>
        <l id="s4:l3" met="3" type="-+">Te winnen onse <rhyme label="a" type="f" corresp="#s4:l1">gebreecken</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">En dat niet, niet daer <rhyme label="b" type="m" corresp="#s4:l2">naer</rhyme>,</l>
        <l id="s4:l5" met="2" type="-+">Ons van u <rhyme label="c" type="m">leydt</rhyme>,</l>
        <l id="s4:l6" met="2" type="-+">Ofte <rhyme label="c" type="m" corresp="#s4:l5">afscheydt</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Hoe Satan, 't Vlees en Werelt <rhyme label="c" type="m" corresp="#s4:l5">pleyt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Voor uw' wy o Iesu <rhyme label="a" type="f">knielen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Met seer diepen <rhyme label="b" type="m">ootmoet</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Spreeckt, en gunt aen onse <rhyme label="a" type="f" corresp="#s5:l1">zielen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Dese uw' woorden <rhyme label="b" type="m" corresp="#s5:l2">soet</rhyme>:</l>
        <l id="s5:l5" met="2" type="-+">Ick groote <rhyme label="c" type="m">Godt</rhyme>,</l>
        <l id="s5:l6" met="2" type="-+">Geef u voor <rhyme label="c" type="m" corresp="#s5:l5">lot</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Gaet in met vreught, in 's Hemels <rhyme label="c" type="m" corresp="#s5:l5">slot</rhyme>.</l>
      </lg>
    </lg>
  </text>

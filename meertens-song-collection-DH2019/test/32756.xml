  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ADams gheslacht steeckt u <rhyme label="a" type="f">trompetten</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Doot duyvel, hel, can u niet <rhyme label="a" type="f" corresp="#s1:l1">letten</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Victorie <rhyme label="b" type="m">triuphant</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Christus heeft <rhyme label="b" type="m" corresp="#s1:l3">d'overhant</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Hemel en Aerde stelt hy <rhyme label="a" type="f" corresp="#s1:l1">wetten</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">En alle vyants <rhyme label="c" type="m">cracht</rhyme></l>
        <l id="s1:l7" met="4" type="-+">Is van hem te niet <rhyme label="c" type="m" corresp="#s1:l6">ghebracht</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">S'morghens als het began te <rhyme label="a" type="f">daghen</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Hoorde-men Magdalena <rhyme label="a" type="f" corresp="#s2:l1">claghen</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Als sy hem niet en <rhyme label="b" type="m">sagh</rhyme></l>
        <l id="s2:l4" met="3" type="-+">In't graf daer hy eerst <rhyme label="b" type="m" corresp="#s2:l3">lagh</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Maer hy quam selfs de nieu maer <rhyme label="a" type="f" corresp="#s2:l1">draghen</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Dat van hem op dat <rhyme label="c" type="m">pas</rhyme></l>
        <l id="s2:l7" met="4" type="-+">Hel en Doot verwonnen <rhyme label="c" type="m" corresp="#s2:l6">was</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">S'avonts quam hy hem <rhyme label="a" type="f">openbaren</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Daer sijn Discipelen t'samen <rhyme label="a" type="f" corresp="#s3:l1">waren</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Maer Thomas was <rhyme label="b" type="m">absent</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Dat was hem groot <rhyme label="b" type="m" corresp="#s3:l3">torment</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">En hy sprack dat hy gaet <rhyme label="a" type="f" corresp="#s3:l1">verklaren</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Gheloofs ick niet, t'zy <rhyme label="c" type="m">saeck</rhyme></l>
        <l id="s3:l7" met="4" type="-+">Dat ick selfs sijn wonden <rhyme label="c" type="m" corresp="#s3:l6">raeck</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Acht dagen waren niet <rhyme label="a" type="f">versteecken</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Als Thomas creeght ghewensche <rhyme label="a" type="f" corresp="#s4:l1">teecken</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Christus verthoont hem <rhyme label="b" type="m">bly</rhyme></l>
        <l id="s4:l4" met="3" type="-+">En sprack; Thoma comt <rhyme label="b" type="m" corresp="#s4:l3">by</rhyme>:</l>
        <l id="s4:l5" met="4" type="-+">Wilt u hant in mijn sijde <rhyme label="a" type="f" corresp="#s4:l1">steecken</rhyme>.</l>
        <l id="s4:l6" met="3" type="-+">Thomas verwondert <rhyme label="c" type="m">seer</rhyme></l>
        <l id="s4:l7" met="4" type="-+">Riep terstont mijn God mijn <rhyme label="c" type="m" corresp="#s4:l6">Heer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ende ten leste voor haer <rhyme label="a" type="f">ooghen</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Is hy verwinner op <rhyme label="a" type="f" corresp="#s5:l1">ghetooghen</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Tot in des Hemels <rhyme label="b" type="m">throon</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Daer draeght hy nu de <rhyme label="b" type="m" corresp="#s5:l3">croon</rhyme></l>
        <l id="s5:l5" met="4" type="-+">En's Hemels heyr met knien <rhyme label="a" type="f" corresp="#s5:l1">ghebooghen</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Singht hem prijs lof en <rhyme label="c" type="m">danck</rhyme></l>
        <l id="s5:l7" met="4" type="-+">Met een Hemels soet <rhyme label="c" type="m" corresp="#s5:l6">ghesanck</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ghy Christene ziel wilt oock <rhyme label="a" type="f">loven</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Vwen verlosser van daer <rhyme label="a" type="f" corresp="#s6:l1">boven</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Die 't al verwonnen <rhyme label="b" type="m">heeft</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Hem alleen glorie <rhyme label="b" type="m" corresp="#s6:l3">gheeft</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Deur Adams val waert ghy <rhyme label="a" type="f" corresp="#s6:l1">verschoven</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Nu zijt ghy <rhyme label="c" type="m">vereert</rhyme>.</l>
        <l id="s6:l7" met="4" type="-+">Dus met Christo <rhyme label="c" type="m" corresp="#s6:l6">triumpheert</rhyme>.</l>
      </lg>
    </lg>
  </text>

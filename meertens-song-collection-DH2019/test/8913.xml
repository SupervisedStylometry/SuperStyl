    <melody>Aus tiefer Not schrei ich zu dir</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">VVT dieper Noot schrey ic tot <rhyme label="a" type="m">dy</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">HEEr Godt verhoort mijn <rhyme label="b" type="f">Roepen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Dijn g'nadigh Ooren keer tot <rhyme label="a" type="m" corresp="#s1:l1">my</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Om mijn Ghebedt doets' <rhyme label="b" type="f" corresp="#s1:l2">Open</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Want ist dat ghy wilt sien hier <rhyme label="c" type="m">aen</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Wat Sond' end Onrecht is <rhyme label="c" type="m" corresp="#s1:l5">ghedaen</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Wie kan (HEER) voor dy <rhyme label="d" type="f">blijven</rhyme>?</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">By dy gelt niet dan G'naed en <rhyme label="a" type="m">gunst</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Die Sonden te <rhyme label="b" type="f">vergeven</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Om niet is onse Doen en <rhyme label="a" type="m" corresp="#s2:l1">Kunst</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Oock in den besten <rhyme label="b" type="f" corresp="#s2:l2">Levend'</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Voor dy niemandt hem Roemen <rhyme label="c" type="m">kan</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Dies moet dy vreesen <rhyme label="c" type="m" corresp="#s2:l5">alleman</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">En dijner G'nade <rhyme label="d" type="f">leven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Daerom op Godt wil Hopen <rhyme label="a" type="m">ick</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Op mijn verdienst niet <rhyme label="b" type="f">bouwen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Op hem mijn Hert sal <rhyme label="a" type="m" corresp="#s3:l1">vastlick</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">End op syn Goetheyt <rhyme label="b" type="f" corresp="#s3:l2">Trouwen</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Die my toe seydt syn weerdich <rhyme label="c" type="m">Woort</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Dat is mijn Troost, mijn trou <rhyme label="c" type="m" corresp="#s3:l5">Confoort</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Des wil ick steedts <rhyme label="d" type="f">verbeyden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Al duerent schoon tot in den <rhyme label="a" type="m">Nacht</rhyme></l>
        <l id="s4:l2" met="3" type="-+">End weder aen den <rhyme label="b" type="f">Morghen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Noch sal mijn Hert aen Godes <rhyme label="a" type="m" corresp="#s4:l1">Macht</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Vertwijff'len niet noch <rhyme label="b" type="f" corresp="#s4:l2">sorghen</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">So doet Israel rechter <rhyme label="c" type="m">aert</rhyme>.</l>
        <l id="s4:l6" met="4" type="-+">Die wt den Geest herboren <rhyme label="c" type="m" corresp="#s4:l5">werdt</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">End synes Gods <rhyme label="d" type="f">verbeyde</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Al syn by ons veel sonden <rhyme label="a" type="m">quaet</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">By Godt is meer <rhyme label="b" type="f">Ghenade</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Syn Handt te helpen heeft gheen <rhyme label="a" type="m" corresp="#s5:l1">Maet</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Hoe groot oock sy die <rhyme label="b" type="f" corresp="#s5:l2">schade</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Hy is alleen die Herder <rhyme label="c" type="m">goet</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Die Israel verlossen <rhyme label="c" type="m" corresp="#s5:l5">moet</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Wt synen Sonden <rhyme label="d" type="f">alle</rhyme>.</l>
      </lg>
    </lg>
  </text>

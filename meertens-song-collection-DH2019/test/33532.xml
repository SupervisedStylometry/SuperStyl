<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>33532</id>
    <date>
      <year-start>1614</year-start>
      <year-end>1614</year-end>
    </date>
    <tags>
      <tag standard-name="klaaglied" translation="lamentation">klaaglied</tag>
      <tag standard-name="spotlied" translation="mocking song">spotlied</tag>
    </tags>
    <melody>Schoon liefje jent zeer excellent</melody>
    <categories>
      <category translation="emotions">emoties</category>
      <category translation="amusement">vermaak</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Broeders goet, en susters <rhyme label="a" type="m">ootmoet</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Laet ons den Heere <rhyme label="b" type="f">claegen</rhyme></l>
        <l id="s1:l3" met="4" type="-+">Door t’verlies van geestelyc <rhyme label="a" type="m" corresp="#s1:l1">goet</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Dat die ziel steruen <rhyme label="a" type="m" corresp="#s1:l1">doet</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">O Heere gheeft ons <rhyme label="a" type="m" corresp="#s1:l1">moet</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Dat wy toch niet <rhyme label="b" type="f" corresp="#s1:l2">versaeghen</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">V straf die worden wy <rhyme label="a" type="m">gewaer</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Maer noch niet ten <rhyme label="b" type="f">meesten</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Want als ic clim tot hondert <rhyme label="a" type="m" corresp="#s2:l1">iaer</rhyme></l>
        <l id="s2:l4" met="4" type="-+">En aenmerck haer leuen <rhyme label="a" type="m" corresp="#s2:l1">daer</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Soo schaem ick my <rhyme label="a" type="m" corresp="#s2:l1">voorwaer</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Wy leuen als die <rhyme label="b" type="f" corresp="#s2:l2">beesten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Sy vreesden Godt, en hielden sijn <rhyme label="a" type="m">ghebodt</rhyme></l>
        <l id="s3:l2" met="4" type="-+">En ginghen liefde <rhyme label="b" type="f">thoonen</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Nv achtmense <rhyme label="a" type="m" corresp="#s3:l1">sodt</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">En hout met haer den <rhyme label="a" type="m" corresp="#s3:l1">spot</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Die leuen na den raet van <rhyme label="a" type="m" corresp="#s3:l1">Godt</rhyme></l>
        <l id="s3:l6" met="4" type="-+">T’sy dochters of <rhyme label="b" type="f" corresp="#s3:l2">zoonen</rhyme>:</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Daer was een geloof ende niet <rhyme label="a" type="m">meer</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Het volck ginck ter <rhyme label="b" type="f">kercken</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Daer hoorden zy die oude <rhyme label="a" type="m" corresp="#s4:l1">leer</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Om te dienen Godt den <rhyme label="a" type="m" corresp="#s4:l1">heer</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Syn Sacramenten beweesmen <rhyme label="a" type="m" corresp="#s4:l1">eer</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Nu sietmen ander <rhyme label="b" type="f" corresp="#s4:l2">wercken</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">De beloften diemen had <rhyme label="a" type="m">gedaen</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Moestmen houden en niet <rhyme label="b" type="f">breecken</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Die menschen spraecken malcander <rhyme label="a" type="m" corresp="#s5:l1">aen</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Op iae, en neen mochtmen vast <rhyme label="a" type="m" corresp="#s5:l1">staen</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Men sach het volck simpel <rhyme label="a" type="m" corresp="#s5:l1">gaen</rhyme></l>
        <l id="s5:l6" met="4" type="-+">En hoordent Euangelie <rhyme label="b" type="f" corresp="#s5:l2">preecken</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Gods tempelen die daer waren <rhyme label="a" type="m">ghesticht</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Datmen Gods dienst souden <rhyme label="b" type="f">Celebreren</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Men ontstack op die autaeren seecker <rhyme label="a" type="m" corresp="#s6:l1">licht</rhyme></l>
        <l id="s6:l4" met="4" type="-+">So waren zy aen Godt <rhyme label="a" type="m" corresp="#s6:l1">verplicht</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Want dit was haer <rhyme label="a" type="m" corresp="#s6:l1">ghesicht</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Datmen Godt zo mosten <rhyme label="b" type="f" corresp="#s6:l2">eeren</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Het volck was onnosel ende <rhyme label="a" type="m">slecht</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Naer Pastoors al <rhyme label="b" type="f">onderdanich</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Het zy maechden ofte <rhyme label="a" type="m" corresp="#s7:l1">knecht</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Sy waren al goet en oock <rhyme label="a" type="m" corresp="#s7:l1">oprecht</rhyme></l>
        <l id="s7:l5" met="4" type="-+">Wat van meester of vrou wert <rhyme label="a" type="m" corresp="#s7:l1">gesecht</rhyme></l>
        <l id="s7:l6" met="4" type="-+">Waeren sy niet weder <rhyme label="b" type="f" corresp="#s7:l2">spaenich</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Den coninck hielden zy zeer <rhyme label="a" type="m">weert</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Oock die van hem werden <rhyme label="b" type="f">ghesonden</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Gods Priesters werden oock <rhyme label="a" type="m" corresp="#s8:l1">ghe-eert</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Omt gheloof wort niet <rhyme label="a" type="m" corresp="#s8:l1">gedisputeert</rhyme></l>
        <l id="s8:l5" met="4" type="-+">Maer dit is nu al <rhyme label="a" type="m" corresp="#s8:l1">verkeert</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Daer die nieuheyt wert <rhyme label="b" type="f" corresp="#s8:l2">gheuonden</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Die liefde die is daer zeer <rhyme label="a" type="m">vercout</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Men vint daer weynich <rhyme label="b" type="f">wercken</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Elck het met zyn leeraers <rhyme label="a" type="m" corresp="#s9:l1">hout</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Diemen daer zeer veel <rhyme label="a" type="m" corresp="#s9:l1">aenschout</rhyme></l>
        <l id="s9:l5" met="4" type="-+">Ider op zyn fantasie <rhyme label="a" type="m" corresp="#s9:l1">bout</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">En rechten op verscheyden <rhyme label="b" type="f" corresp="#s9:l2">kercken</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Wt v seyt Paulus, sullen <rhyme label="a" type="m">opstaen</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Die verkeertheyt sullen <rhyme label="b" type="f">spreecken</rhyme></l>
        <l id="s10:l3" met="4" type="-+">En wilt gheen ander leer <rhyme label="a" type="m" corresp="#s10:l1">ontfaen</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Dan wy hebben kunt <rhyme label="a" type="m" corresp="#s10:l1">ghedaen</rhyme></l>
        <l id="s10:l5" met="4" type="-+">Al boodt v een Engel anders <rhyme label="a" type="m" corresp="#s10:l1">aen</rhyme></l>
        <l id="s10:l6" met="4" type="-+">Alsmen v eerst deden <rhyme label="b" type="f" corresp="#s10:l2">preecken</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Daer coemt als nu int <rhyme label="a" type="m">openbaer</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Veel nieu Lerings op <rhyme label="b" type="f">rijsen</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Daermen noyt af hoort ouer hondert <rhyme label="a" type="m" corresp="#s11:l1">iaer</rhyme></l>
        <l id="s11:l4" met="4" type="-+">Mits zy daer niet en <rhyme label="a" type="m" corresp="#s11:l1">waer</rhyme></l>
        <l id="s11:l5" met="4" type="-+">Dese willen ons <rhyme label="a" type="m" corresp="#s11:l1">allegaer</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">Daer voor ten hemel <rhyme label="b" type="f" corresp="#s11:l2">wijsen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Sy heeten haer al <rhyme label="a" type="m">Christiaen</rhyme></l>
        <l id="s12:l2" met="4" type="-+">En willen wonder <rhyme label="b" type="f">wtrechten</rhyme></l>
        <l id="s12:l3" met="4" type="-+">Sy brenghen al schriftuer op <rhyme label="a" type="m" corresp="#s12:l1">baen</rhyme></l>
        <l id="s12:l4" met="4" type="-+">En laten een yder daer toe <rhyme label="a" type="m" corresp="#s12:l1">gaen</rhyme></l>
        <l id="s12:l5" met="4" type="-+">Dien zy alzo <rhyme label="a" type="m" corresp="#s12:l1">verstaen</rhyme>,</l>
        <l id="s12:l6" met="4" type="-+">Dat zy daer in gaen <rhyme label="b" type="f" corresp="#s12:l2">vechten</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Al heeft Luter haer al voor <rhyme label="a" type="m">ghegaen</rhyme></l>
        <l id="s13:l2" met="4" type="-+">Om wat nieus te <rhyme label="b" type="f">vinden</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Swinglius en Caluinus quamen daer <rhyme label="a" type="m" corresp="#s13:l1">aen</rhyme></l>
        <l id="s13:l4" met="4" type="-+">Die eerste doopers ist al mee <rhyme label="a" type="m" corresp="#s13:l1">ghedaen</rhyme></l>
        <l id="s13:l5" met="4" type="-+">En moeten nu al achter <rhyme label="a" type="m" corresp="#s13:l1">staen</rhyme></l>
        <l id="s13:l6" met="4" type="-+">Want haer ander onder <rhyme label="b" type="f" corresp="#s13:l2">winden</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Oock comen nu int <rhyme label="a" type="m">openbaer</rhyme></l>
        <l id="s14:l2" met="4" type="-+">Veel nieuwe <rhyme label="b" type="f">Caluinisten</rhyme></l>
        <l id="s14:l3" met="4" type="-+">Die nu de waerheyt eerst suyuer, en <rhyme label="a" type="m" corresp="#s14:l1">claer</rhyme></l>
        <l id="s14:l4" met="4" type="-+">So zy t’volck wijs maecken <rhyme label="a" type="m" corresp="#s14:l1">daer</rhyme></l>
        <l id="s14:l5" met="4" type="-+">Ontrint Leyden, ende <rhyme label="a" type="m" corresp="#s14:l1">Alckmaer</rhyme></l>
        <l id="s14:l6" met="4" type="-+">Ghenaemt den <rhyme label="b" type="f" corresp="#s14:l2">Adolfisten</rhyme></l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Haer tempels staen als een ydel <rhyme label="a" type="m">schuit</rhyme></l>
        <l id="s15:l2" met="4" type="-+">Het volck gaer daer <rhyme label="b" type="f">clappen</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">Daer is gheen ghedenckenis van <rhyme label="a" type="m" corresp="#s15:l1">figuier</rhyme></l>
        <l id="s15:l4" met="4" type="-+">Maer niet dan danck, en ydel <rhyme label="a" type="m" corresp="#s15:l1">muier</rhyme></l>
        <l id="s15:l5" met="4" type="-+">Men speelt daer met die <rhyme label="a" type="m" corresp="#s15:l1">schriftuier</rhyme></l>
        <l id="s15:l6" met="4" type="-+">Oock in Herberch daermen <rhyme label="b" type="f" corresp="#s15:l2">tappen</rhyme></l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Men hoort onder haer eenen <rhyme label="a" type="m">sanck</rhyme></l>
        <l id="s16:l2" met="4" type="-+">T’ghedicht van Peter <rhyme label="b" type="f">Dathenen</rhyme>,</l>
        <l id="s16:l3" met="4" type="-+">Dat is onder haer daer al in <rhyme label="a" type="m" corresp="#s16:l1">swanck</rhyme></l>
        <l id="s16:l4" met="4" type="-+">Door den riem cort ende <rhyme label="a" type="m" corresp="#s16:l1">lanck</rhyme></l>
        <l id="s16:l5" met="4" type="-+">Alzo gesonghen vande <rhyme label="a" type="m" corresp="#s16:l1">banck</rhyme></l>
        <l id="s16:l6" met="4" type="-+">Gaen zy daer weder <rhyme label="b" type="f" corresp="#s16:l2">henen</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Sy hooren daer een cort <rhyme label="a" type="m">sermoen</rhyme></l>
        <l id="s17:l2" met="4" type="-+">Datmen den prediker wel <rhyme label="b" type="f">loonen</rhyme></l>
        <l id="s17:l3" met="4" type="-+">Gheminlyck can hy wel lasteren <rhyme label="a" type="m" corresp="#s17:l1">coen</rhyme></l>
        <l id="s17:l4" met="4" type="-+">En die rest is licht om <rhyme label="a" type="m" corresp="#s17:l1">doen</rhyme>,</l>
        <l id="s17:l5" met="4" type="-+">Alleen tgheloof moet salicheyt <rhyme label="a" type="m" corresp="#s17:l1">vroen</rhyme></l>
        <l id="s17:l6" met="4" type="-+">Gaet hy haer daer <rhyme label="b" type="f" corresp="#s17:l2">bethoonen</rhyme></l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Onse kercken waren eertijts <rhyme label="a" type="m">verciert</rhyme></l>
        <l id="s18:l2" met="4" type="-+">Door een tael deedmen Godt <rhyme label="b" type="f">louen</rhyme></l>
        <l id="s18:l3" met="4" type="-+">Het volck was deuoodt, en <rhyme label="a" type="m" corresp="#s18:l1">gemaeniert</rhyme></l>
        <l id="s18:l4" met="4" type="-+">Die Feest dagen worden wel <rhyme label="a" type="m" corresp="#s18:l1">gheuiert</rhyme></l>
        <l id="s18:l5" met="4" type="-+">Gods dienst word <rhyme label="a" type="m" corresp="#s18:l1">ghecelebreert</rhyme></l>
        <l id="s18:l6" met="4" type="-+">Dit heeftmen ons gaen <rhyme label="b" type="f" corresp="#s18:l2">rouen</rhyme></l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">Wy bidden v Heer, met <rhyme label="a" type="m">ootmoedicheyt</rhyme></l>
        <l id="s19:l2" met="4" type="-+">Wilt ons toch bystant <rhyme label="b" type="f">gheuen</rhyme></l>
        <l id="s19:l3" met="4" type="-+">Dat wy ymmers niet en worden <rhyme label="a" type="m" corresp="#s19:l1">verleyt</rhyme></l>
        <l id="s19:l4" met="4" type="-+">Door dees quade <rhyme label="a" type="m" corresp="#s19:l1">nieuwicheyt</rhyme></l>
        <l id="s19:l5" met="4" type="-+">Gheeft ons weer die <rhyme label="a" type="m" corresp="#s19:l1">viericheyt</rhyme></l>
        <l id="s19:l6" met="4" type="-+">Om nae uwen wil te <rhyme label="b" type="f" corresp="#s19:l2">leuen</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">Orlof Broeders valt den Heere te <rhyme label="a" type="m">voet</rhyme></l>
        <l id="s20:l2" met="4" type="-+">Aen roept hem al <rhyme label="b" type="f">eendrachtich</rhyme></l>
        <l id="s20:l3" met="4" type="-+">Dat wy niet door smeeckentheyt <rhyme label="a" type="m" corresp="#s20:l1">soet</rhyme></l>
        <l id="s20:l4" met="4" type="-+">Vallen vant gheloue <rhyme label="a" type="m" corresp="#s20:l1">goet</rhyme>,</l>
        <l id="s20:l5" met="4" type="-+">Soo daer nu menich <rhyme label="a" type="m" corresp="#s20:l1">doet</rhyme></l>
        <l id="s20:l6" met="4" type="-+">Bewaert ons O Godt <rhyme label="b" type="f" corresp="#s20:l2">almachtich</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

    <melody>Een meisje had een ruiter lief</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ALs Sint Iacobi waerde <rhyme label="a" type="m">hooft</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Herodis sweert hadt <rhyme label="a" type="m" corresp="#s1:l1">afgeklooft</rhyme>;</l>
        <l id="s1:l3" met="3" type="-+">En 's hemels hooge <rhyme label="b" type="f">Stede</rhyme></l>
        <l id="s1:l4" met="3" type="-+">De ziel was <rhyme label="b" type="f" corresp="#s1:l3">ingetreden</rhyme>:</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Soo heeft dien Guyt, en boosen <rhyme label="a" type="m">Schelm</rhyme></l>
        <l id="s2:l2" met="4" type="-+">We'er aengetrocken 's gramschaps <rhyme label="a" type="m" corresp="#s2:l1">helm</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">En slough met wreede <rhyme label="b" type="f">handen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Sint Pieter in de <rhyme label="b" type="f" corresp="#s2:l3">banden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Want siende dat d' onrechte <rhyme label="a" type="m">straf</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Iacobi, groot genougen <rhyme label="a" type="m" corresp="#s3:l1">gaf</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Aen d' hert-geneckte <rhyme label="b" type="f">Jooden</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Woud' hy oock Petrum <rhyme label="b" type="f" corresp="#s3:l3">dooden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ach! hy wou dooden Godes <rhyme label="a" type="m">Tolck</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Om dat hy by het Joodsche <rhyme label="a" type="m" corresp="#s4:l1">volck</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Door die bebloede <rhyme label="b" type="f">Staty</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Bekomen sou meer <rhyme label="b" type="f" corresp="#s4:l3">graty</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Den goeden Petrus wel <rhyme label="a" type="m">bedaerd</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Sat in den kercker vast <rhyme label="a" type="m" corresp="#s5:l1">bewaert</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Door viermael vier <rhyme label="b" type="f">Soldaten</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Die Wet en God <rhyme label="b" type="f" corresp="#s5:l3">vergaten</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Terwijl de kerck, met droeve <rhyme label="a" type="m">stem</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Maer vast geloof, den Heer voor <rhyme label="a" type="m" corresp="#s6:l1">Hem</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Badt sonder op te <rhyme label="b" type="f">houwen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Bela'en met duysend' <rhyme label="b" type="f" corresp="#s6:l3">rouwen</rhyme>,</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Tot op den alderlaetsten <rhyme label="a" type="m">nacht</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Dat Hem den Vorst met groot <rhyme label="a" type="m" corresp="#s7:l1">verwacht</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Des Volcxs, sou laten <rhyme label="b" type="f">rechten</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Door sijne boose <rhyme label="b" type="f" corresp="#s7:l3">knechten</rhyme>;</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">En Hy te slapen <rhyme label="a" type="m">onvermoeydt</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Lagh, met twee ketinghs wel <rhyme label="a" type="m" corresp="#s8:l1">geboeydt</rhyme></l>
        <l id="s8:l3" met="3" type="-+">In 't midden van twee <rhyme label="b" type="f">Gasten</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Die wacker op hem <rhyme label="b" type="f" corresp="#s8:l3">pasten</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Maer God verhoorend' het <rhyme label="a" type="m">gebed</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Sijns Tempels, stierden tot <rhyme label="a" type="m" corresp="#s9:l1">belet</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Van d' opgeblasen <rhyme label="b" type="f">Koningh</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Uyt 's hemels hooge <rhyme label="b" type="f" corresp="#s9:l3">wooningh</rhyme></l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Een Engel, die van sijn <rhyme label="a" type="m">gesicht</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Afstralende een hemelsch' <rhyme label="a" type="m" corresp="#s10:l1">licht</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Bescheen den <rhyme label="b" type="f">Deughden-wercker</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">In dese donck're <rhyme label="b" type="f" corresp="#s10:l3">kercker</rhyme>:</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">En, slaende Petrum aen de <rhyme label="a" type="m">zy</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Sprack: Ras wert wacker, en zijt <rhyme label="a" type="m" corresp="#s11:l1">vry</rhyme></l>
        <l id="s11:l3" met="3" type="-+">Van uwe stale <rhyme label="b" type="f">boeyen</rhyme>;</l>
        <l id="s11:l4" met="3" type="-+">En vordert U te <rhyme label="b" type="f" corresp="#s11:l3">schoeyen</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">'t Geschiede stracx. End' Hy <rhyme label="a" type="m">weÃªrom</rhyme>:</l>
        <l id="s12:l2" met="4" type="-+">Sa! doet my flucxs de mantel <rhyme label="a" type="m" corresp="#s12:l1">om</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Sa! wacker op de <rhyme label="b" type="f">beenen</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Geluck is U <rhyme label="b" type="f" corresp="#s12:l3">verschenen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">'t Is wel: nu volght my op het <rhyme label="a" type="m">spoor</rhyme></l>
        <l id="s13:l2" met="4" type="-+">Al waer ick gae; dat is u <rhyme label="a" type="m" corresp="#s13:l1">voor</rhyme>.</l>
        <l id="s13:l3" met="3" type="-+">En siet (O wond're <rhyme label="b" type="f">dingen</rhyme>!)</l>
        <l id="s13:l4" met="3" type="-+">Dees twee te samen <rhyme label="b" type="f" corresp="#s13:l3">gingen</rhyme>,</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Soo door de een als d' and're <rhyme label="a" type="m">wacht</rhyme>.</l>
        <l id="s14:l2" met="4" type="-+">Gheen stale poort, geen manne <rhyme label="a" type="m" corresp="#s14:l1">kracht</rhyme></l>
        <l id="s14:l3" met="3" type="-+">Kon houden hun <rhyme label="b" type="f">gevangen</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">Noch hind'ren hunne <rhyme label="b" type="f" corresp="#s14:l3">gangen</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Soo langh tot dat Hem uyt des <rhyme label="a" type="m">doods</rhyme></l>
        <l id="s15:l2" met="4" type="-+">Gevaer bevrijdt, den Engel <rhyme label="a" type="m" corresp="#s15:l1">Goods</rhyme></l>
        <l id="s15:l3" met="3" type="-+">Gebrocht had op de <rhyme label="b" type="f">straten</rhyme>,</l>
        <l id="s15:l4" met="3" type="-+">Waer Hy Hem heeft <rhyme label="b" type="f" corresp="#s15:l3">verlaten</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">End' Hy als uyt een droom <rhyme label="a" type="m">verweckt</rhyme></l>
        <l id="s16:l2" met="4" type="-+">Prees Godes hand, die <rhyme label="a" type="m" corresp="#s16:l1">uytgestreckt</rhyme></l>
        <l id="s16:l3" met="3" type="-+">Haer hadde 't sijnder <rhyme label="b" type="f">voordeel</rhyme></l>
        <l id="s16:l4" met="3" type="-+">Met zeer goetgunstich <rhyme label="b" type="f" corresp="#s16:l3">Oordeel</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Nu weet ick waerlijck dat den <rhyme label="a" type="m">Heer</rhyme></l>
        <l id="s17:l2" met="4" type="-+">Tot my, sprack Hy, van boven <rhyme label="a" type="m" corresp="#s17:l1">ne'er</rhyme></l>
        <l id="s17:l3" met="3" type="-+">Sijn Engel heeft <rhyme label="b" type="f">gesonden</rhyme>,</l>
        <l id="s17:l4" met="3" type="-+">En van 't geboey <rhyme label="b" type="f" corresp="#s17:l3">ontbonden</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Hy heeft my uyt Herodis <rhyme label="a" type="m">macht</rhyme>,</l>
        <l id="s18:l2" met="4" type="-+">En uyt der Joden scharpe <rhyme label="a" type="m" corresp="#s18:l1">wacht</rhyme>,</l>
        <l id="s18:l3" met="3" type="-+">En van meer and're <rhyme label="b" type="f">plagen</rhyme>,</l>
        <l id="s18:l4" met="3" type="-+">Zeer wonderlijck <rhyme label="b" type="f" corresp="#s18:l3">ontslagen</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">O Iesu, door wiens stercke <rhyme label="a" type="m">hand</rhyme>,</l>
        <l id="s19:l2" met="4" type="-+">D' Apostel van sijn dubb'len <rhyme label="a" type="m" corresp="#s19:l1">band</rhyme></l>
        <l id="s19:l3" met="3" type="-+">Ontslagen is op <rhyme label="b" type="f">heden</rhyme>,</l>
        <l id="s19:l4" met="3" type="-+">Gunt ons door sijn <rhyme label="b" type="f" corresp="#s19:l3">gebeden</rhyme>,</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">Dat wy voortaen van sonden <rhyme label="a" type="m">vry</rhyme>,</l>
        <l id="s20:l2" met="4" type="-+">Gerust zijn, en van herte <rhyme label="a" type="m" corresp="#s20:l1">bly</rhyme>;</l>
        <l id="s20:l3" met="3" type="-+">En wilt hier namaels <rhyme label="b" type="f">geven</rhyme></l>
        <l id="s20:l4" met="3" type="-+">Aen ons het eeuw'ge <rhyme label="b" type="f" corresp="#s20:l3">leven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

    <melody>Het gewas van het vlas en het weven dat</melody>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Zijt wellekom Bruyd’gom en vrouw <rhyme label="a" type="m">Bruyd</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Welkom geheeten <rhyme label="a" type="m" corresp="#s1:l1">overluyd</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">Tot dezer <rhyme label="b" type="m">stee</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En u Gezelschap <rhyme label="b" type="m" corresp="#s1:l3">mee</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Gy zijt gebonden met <rhyme label="a" type="m">Egten-band</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Door ’t geven van u <rhyme label="a" type="m" corresp="#s2:l1">Regter-hand</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Neemt waar ’t <rhyme label="b" type="m">Verbond</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Gemaakt met uwen <rhyme label="b" type="m" corresp="#s2:l3">Mond</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Zijn lief u Man-hoofd <rhyme label="a" type="m">aangenaam</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">In ’t goede altijd <rhyme label="a" type="m" corresp="#s3:l1">gehoorzaam</rhyme>:</l>
        <l id="s3:l3" met="2" type="-+">Bemind u <rhyme label="b" type="m">Wijf</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Gelijk u eygen <rhyme label="b" type="m" corresp="#s3:l3">lijf</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Die liefde tusschen Man en <rhyme label="a" type="m">Wijf</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Is een belet van veel <rhyme label="a" type="m" corresp="#s4:l1">gekijf</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">Volgt voort de Schrift <rhyme label="b" type="m">na</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Van Abram en <rhyme label="b" type="m" corresp="#s4:l3">Sara</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Geluk in deugdes <rhyme label="a" type="m">overvloed</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Geluk u staat vermeeren <rhyme label="a" type="m" corresp="#s5:l1">moet</rhyme>,</l>
        <l id="s5:l3" met="2" type="-+">Geluk en <rhyme label="b" type="m">vree</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Voor ’t Iaar eynd’ Een van <rhyme label="b" type="m" corresp="#s5:l3">Twee</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

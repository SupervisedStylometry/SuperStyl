    <melody>Psalm 009 Datheen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">UWz ljeav' HEER' wol ick, to dizz' <rhyme label="a" type="m">stuwn'</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Lof-sjongje' uwt hert, ja <rhyme label="a" type="m" corresp="#s1:l1">herte-gruwn'</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">'k Wol kiel, hert, pin in tomme ijn 't <rhyme label="b" type="f">herpjen</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Om 't wond're Goads klear t'uwttjen <rhyme label="b" type="f" corresp="#s1:l3">scherppje</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Yn jo sil 'k steez oon blier in <rhyme label="a" type="m">bly</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Op donssje' in gaest-formeytssje <rhyme label="a" type="m" corresp="#s2:l1">my</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">Jôn Namme sil 'k for âd in <rhyme label="b" type="f">jonge</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">O allerheagste! <rhyme label="b" type="f" corresp="#s2:l3">lof-psalm-sjonge</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Om dat mijn fijnne' iz <rhyme label="a" type="m">efter-beck</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Oer-tomle', in fluechtjend' romt it <rhyme label="a" type="m" corresp="#s3:l1">feck</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Hy ploff 't forsleyn', hy mot <rhyme label="b" type="f">fordearre</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Fen jon eansichte' holp-redd' ljeave' <rhyme label="b" type="f" corresp="#s3:l3">HEERE</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Want Y habbe', HEER', mijn lijck, mijn <rhyme label="a" type="m">rjuecht</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Mijn rjuecht-sake' oef-dien, lijck' in <rhyme label="a" type="m" corresp="#s4:l1">sljuecht'</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Y sietene' op jon Troon, O <rhyme label="b" type="f">Rjuechter</rhyme>!</l>
        <l id="s4:l4" met="4" type="-+">O rjuechtvirddigheyts <rhyme label="b" type="f" corresp="#s4:l3">lijck-besljuechter</rhyme>!</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Dy goadleaz' Heyd'nen habbe' Y <rhyme label="a" type="m">schien</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Trog Jon gleon scheldjen gled <rhyme label="a" type="m" corresp="#s5:l1">fordien</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Herr' Namme habbe' Y <rhyme label="b" type="f">gruwnn'-fordijlge</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Ja yvig yvig tor <rhyme label="b" type="f" corresp="#s5:l3">forwijlge</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">O fijnne'! iz nuw trog leaz <rhyme label="a" type="m">beleyd</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">'t Forwoestjen eynge' yn <rhyme label="a" type="m" corresp="#s6:l1">yvigheyt</rhyme>?</l>
        <l id="s6:l3" met="4" type="-+">Sint' nuw uwz Steden az <rhyme label="b" type="f">op-schobbe</rhyme>?</l>
        <l id="s6:l4" met="4" type="-+">In iz herre' huwgg'niss' djiep <rhyme label="b" type="f" corresp="#s6:l3">bedobbe</rhyme>?</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Ne, fijnne, ô ne: God dy 't al <rhyme label="a" type="m">wit</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Al sjocht, al heart, salme' yvig <rhyme label="a" type="m" corresp="#s7:l1">sit</rhyme>;</l>
        <l id="s7:l3" met="4" type="-+">In het sijn War to 't rjuecht <rhyme label="b" type="f">ontditsen</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">In het sijn Troons gordijnne' <rhyme label="b" type="f" corresp="#s7:l3">ontlitsen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Hy schil salm' rjuechtje d'hele <rhyme label="a" type="m">wrad</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Nimmen ontsjeande', az oerste <rhyme label="a" type="m" corresp="#s8:l1">Fâd</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">In oere Ljue sock oordeel <rhyme label="b" type="f">lezze</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Dat sil ruwn om rjuecht-miettig <rhyme label="b" type="f" corresp="#s8:l3">wezze</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Den iz hy to-flechte', heagte', in <rhyme label="a" type="m">schuwll'</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Jerm' dy fortreaun' gâlje' yn druwcks <rhyme label="a" type="m" corresp="#s9:l1">kuwll'</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Ynn' grijmme tijd, yn grouwle <rhyme label="b" type="f">stuwne</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Iz hy de' oer-lest'ge' yen honck <rhyme label="b" type="f" corresp="#s9:l3">befuwne</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Dearom, HEER', dy ion Namme <rhyme label="a" type="m">kin</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Festlijck fortrouw't, mey hert in <rhyme label="a" type="m" corresp="#s10:l1">sin</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Om dat Y habbe nea <rhyme label="b" type="f">forlitten</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Wa jo sijk't, yn op-rjuecht <rhyme label="b" type="f" corresp="#s10:l3">mey-witten</rhyme>,</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Psalm-sjong, ô sjong in sjong al <rhyme label="a" type="m">weer</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Dy t'Syon wennet, de' oerste <rhyme label="a" type="m" corresp="#s11:l1">HEER'</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Forkundje 't folck sijn heage' <rhyme label="b" type="f">ynsond're</rhyme></l>
        <l id="s11:l4" met="4" type="-+">Great-diedig boppe-miette <rhyme label="b" type="f" corresp="#s11:l3">wond're</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Hy sijk't, hy tinckt 't fromm' bloed <rhyme label="a" type="m">forstirt</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Wier oer hy heftig hiet-fâll'g <rhyme label="a" type="m" corresp="#s12:l1">wirt</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Hy sil forjitt'leaz, wis <rhyme label="b" type="f">forhearje</rhyme></l>
        <l id="s12:l4" met="4" type="-+">'t AEng' rop fen dy sijn holp' <rhyme label="b" type="f" corresp="#s12:l3">bejearje</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Wezz' my genadig, HEER' stea <rhyme label="a" type="m">by</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Loytse' het mijn haters dwaene oer <rhyme label="a" type="m" corresp="#s13:l1">my</rhyme>:</l>
        <l id="s13:l3" met="4" type="-+">O! Y dy my 't fordear <rhyme label="b" type="f">ontfnelje</rhyme>!</l>
        <l id="s13:l4" met="4" type="-+">Ja uwt deads portte' in graefs-tuwt <rhyme label="b" type="f" corresp="#s13:l3">helje</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Op dat ick jon great lof <rhyme label="a" type="m">fortolck'</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">Yn Syons portten, oon jon <rhyme label="a" type="m" corresp="#s14:l1">folck</rhyme>.</l>
        <l id="s14:l3" met="4" type="-+">Dear bin 'k op 't heaghlijckste', <rhyme label="b" type="f">hert-folnuwgge</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">Yn jon lock-silligheyt <rhyme label="b" type="f" corresp="#s14:l3">forhuwgge</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">d'Onrjuecht' wirt homppe' yn 't selle <rhyme label="a" type="m">wiel</rhyme></l>
        <l id="s15:l2" met="4" type="-+">Uwt-yerde for de' oprjuechte <rhyme label="a" type="m" corresp="#s15:l1">siel</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">Herr' foet wirt finzene' yn dy <rhyme label="b" type="f">netten</rhyme>,</l>
        <l id="s15:l4" met="4" type="-+">Dy jae to gluwp for oore' <rhyme label="b" type="f" corresp="#s15:l3">uwt-setten</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Doz iz d'HEER' kinbar, heag <rhyme label="a" type="m">ontsjoen</rhyme>,</l>
        <l id="s16:l2" met="4" type="-+">Hy het rjuecht hoff'ne mey <rhyme label="a" type="m" corresp="#s16:l1">fetsoen</rhyme></l>
        <l id="s16:l3" met="4" type="-+">Dy godleaze' iz fortijsd (ô <rhyme label="b" type="f">pleagen</rhyme>!)</l>
        <l id="s16:l4" met="4" type="-+">Yn eyn hann'-wirck (ô spijt!) bedreagen. Higgajon <rhyme label="b" type="f" corresp="#s16:l3">Sela</rhyme>!</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Dy godleaz' schil doz yn 't <rhyme label="a" type="m">fordear</rhyme></l>
        <l id="s17:l2" met="4" type="-+">Oer-beck neye', hol to nimme' in <rhyme label="a" type="m" corresp="#s17:l1">keer</rhyme>,</l>
        <l id="s17:l3" met="4" type="-+">Dy God-forjitt'ne' (yn 't quea <rhyme label="b" type="f">oer-juwne</rhyme></l>
        <l id="s17:l4" met="4" type="-+">'t Near-sillig-paed-spoar-bjuest're) <rhyme label="b" type="f" corresp="#s17:l3">huwne</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Mar de' earm' wirt naet yn 't eyn-leaz' <rhyme label="a" type="m">soer</rhyme></l>
        <l id="s18:l2" met="4" type="-+">Forjitten, hy 's God wird in <rhyme label="a" type="m" corresp="#s18:l1">djoer</rhyme>,</l>
        <l id="s18:l3" met="4" type="-+">Eack iz d'illind'ge <rhyme label="b" type="f">lock-forwachtjen</rhyme></l>
        <l id="s18:l4" met="4" type="-+">Forlern naet, mar yn Goads heage' <rhyme label="b" type="f" corresp="#s18:l3">achtjen</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">Oer-eyne'! op, op! HEER' lit dy <rhyme label="a" type="m">minsch'</rhyme></l>
        <l id="s19:l2" met="4" type="-+">Naet kreftigje' yn sijn gruw'le <rhyme label="a" type="m" corresp="#s19:l1">tinsch'</rhyme></l>
        <l id="s19:l3" met="4" type="-+">Lit de Heyd'nen foor jon eansicht' <rhyme label="b" type="f">schoddje</rhyme>,</l>
        <l id="s19:l4" met="4" type="-+">In trog jon oordeel blea <rhyme label="b" type="f" corresp="#s19:l3">fordoddje</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">O HEER! oon-jey-se bang in <rhyme label="a" type="m">blea</rhyme></l>
        <l id="s20:l2" met="4" type="-+">Deads kijll'-kâdde' eangst' trog hert in <rhyme label="a" type="m" corresp="#s20:l1">ljea</rhyme>,</l>
        <l id="s20:l3" met="4" type="-+">Lit-s' so bedearje' in rjuecht <rhyme label="b" type="f">forsinne</rhyme></l>
        <l id="s20:l4" met="4" type="-+">Dat-se' earme naet'ge Minsken binne. <rhyme label="b" type="f" corresp="#s20:l3">Sela</rhyme>!</l>
      </lg>
    </lg>
  </text>
</song>

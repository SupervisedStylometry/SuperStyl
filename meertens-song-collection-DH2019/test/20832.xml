    <melody>Terwijl uw schaapjes weiden gaan</melody>
    <categories>
      <category translation="emotions">emoties</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">MYn aengenamen vrindt is <rhyme label="a" type="m">doodt</rhyme>;</l>
        <l id="s1:l2" met="4" type="+-">Ach! roep uyt // <rhyme label="b" type="m">overluydt</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Ende segh // hy is <rhyme label="c" type="m">wegh</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Uyt ons' oogen is hy <rhyme label="d" type="m">vervoert</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Sijn lichaem is van ziel <rhyme label="a" type="m" corresp="#s1:l1">ontbloot</rhyme></l>
        <l id="s1:l6" met="6" type="+-">Wonder snel // wonder snel // Godes <rhyme label="e" type="m">wil</rhyme></l>
        <l id="s1:l7" met="3" type="+-">Wou dat hy neder <rhyme label="e" type="m" corresp="#s1:l6">vil</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Ons hart is seer <rhyme label="d" type="m" corresp="#s1:l4">ontroert</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Hy weynich tijd was kranck <rhyme label="a" type="m">geweest</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Ach! niet meer // als den <rhyme label="b" type="m">Heer</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Hem ontbood' // door de <rhyme label="c" type="m">Dood</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Uyt dees werelts bedroefde <rhyme label="d" type="m">baen</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">Wie sal niet wesen dan <rhyme label="a" type="m" corresp="#s2:l1">bevreest</rhyme>,</l>
        <l id="s2:l6" met="6" type="+-">Als haer pijl // en haer bijl // soo dree <rhyme label="e" type="m">set</rhyme></l>
        <l id="s2:l7" met="3" type="+-">De Dood, die op ons <rhyme label="e" type="m" corresp="#s2:l6">let</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Die niemand kan <rhyme label="d" type="m" corresp="#s2:l4">ontgaen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Daerom soo oeffent u in <rhyme label="a" type="m">deughd</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Ghy u all' // op dit <rhyme label="b" type="m">dal</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Eer dat komt // en <rhyme label="c" type="m">verdomt</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Om uw' sonden, u, God den <rhyme label="d" type="m">Heer</rhyme>.</l>
        <l id="s3:l5" met="4" type="-+">Dan sult ghy wesen g'heel <rhyme label="a" type="m" corresp="#s3:l1">verheught</rhyme>,</l>
        <l id="s3:l6" met="6" type="+-">En verblijdt // als den tijd // komen <rhyme label="e" type="m">sal</rhyme></l>
        <l id="s3:l7" met="3" type="+-">Dat binnen 's Hemels <rhyme label="e" type="m" corresp="#s3:l6">wall'</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Ghy komen sult met <rhyme label="d" type="m" corresp="#s3:l4">eer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Hy was een man seer kloeck en <rhyme label="a" type="m">vroom</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Soo van re'en // als van <rhyme label="b" type="m">le'en</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">G'lijck bekent // tot het <rhyme label="c" type="m">end</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Hy geweest is aen <rhyme label="d" type="m">yder-een</rhyme>:</l>
        <l id="s4:l5" met="4" type="-+">Soo dat het scheen te zijn een <rhyme label="a" type="m" corresp="#s4:l1">droom</rhyme>,</l>
        <l id="s4:l6" met="6" type="+-">Dat ons vrind // als een wind // als een <rhyme label="e" type="m">roock</rhyme></l>
        <l id="s4:l7" met="3" type="+-">Uyt dese werelt <rhyme label="e" type="m" corresp="#s4:l6">doock</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">En haestelijck <rhyme label="d" type="m" corresp="#s4:l4">verdween</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Soo dan en kan geleertheyd <rhyme label="a" type="m">niet</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Ons de noodt // die de <rhyme label="b" type="m">Dood</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Ons brengt aen // doen <rhyme label="c" type="m">ontgaen</rhyme>;</l>
        <l id="s5:l4" met="4" type="+-">Want de Dood yder-een <rhyme label="d" type="m">vertreedt</rhyme>.</l>
        <l id="s5:l5" met="4" type="-+">Daerom ick bidd' u, voor u <rhyme label="a" type="m" corresp="#s5:l1">siet</rhyme>,</l>
        <l id="s5:l6" met="6" type="+-">En betrouwt // noch op gout // noch op <rhyme label="e" type="m">kracht</rhyme></l>
        <l id="s5:l7" met="3" type="+-">U oyt; noch oock op <rhyme label="e" type="m" corresp="#s5:l6">macht</rhyme>;</l>
        <l id="s5:l8" met="3" type="-+">De Dood komt eer ghy 't <rhyme label="d" type="m" corresp="#s5:l4">weet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">En g'lijckerwijs ront <rhyme label="a" type="m">omme-gaet</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Satan staechs // 's nachts en <rhyme label="b" type="m">daechs</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Om den mensch // na sijn <rhyme label="c" type="m">wensch</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Te vervoeren na d' helschen <rhyme label="d" type="m">brand</rhyme>:</l>
        <l id="s6:l5" met="4" type="-+">Soo oock de Dood' noyt stil en <rhyme label="a" type="m" corresp="#s6:l1">staet</rhyme>,</l>
        <l id="s6:l6" met="6" type="+-">Maer sy tracht // dach en nacht // in 't <rhyme label="e" type="m">gemeen</rhyme></l>
        <l id="s6:l7" met="3" type="+-">Te Moorden <rhyme label="e" type="m" corresp="#s6:l6">yder-een</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">En 't halen uyt dit <rhyme label="d" type="m" corresp="#s6:l4">Land</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Soo dan geluckigh is die <rhyme label="a" type="m">seer</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Die in strijd // dien hy <rhyme label="b" type="m">lijdt</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Dien hy heeft // niet en <rhyme label="c" type="m">sneeft</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Die ten allen tijd hout goe <rhyme label="d" type="m">wacht</rhyme>.</l>
        <l id="s7:l5" met="4" type="-+">Des toe siet, vrinden, slaept niet <rhyme label="a" type="m" corresp="#s7:l1">meer</rhyme></l>
        <l id="s7:l6" met="6" type="+-">In u quaedt // maer verlaet // uwe <rhyme label="e" type="m">sond</rhyme>,</l>
        <l id="s7:l7" met="3" type="+-">Ey! doet toch dit <rhyme label="e" type="m" corresp="#s7:l6">terstond</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">En na de deughden <rhyme label="d" type="m" corresp="#s7:l4">tracht</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">O vrinden! dit wordt u <rhyme label="a" type="m">geseyt</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Van die geen // wiens <rhyme label="b" type="m">gesteen</rhyme></l>
        <l id="s8:l3" met="4" type="+-">Na u jacht // ende <rhyme label="c" type="m">tracht</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Om dat ghy daer na leven <rhyme label="d" type="m">soud</rhyme>.</l>
        <l id="s8:l5" met="4" type="-+">Ach! ach! uw' sonden hier <rhyme label="a" type="m" corresp="#s8:l1">beschreyt</rhyme>,</l>
        <l id="s8:l6" met="6" type="+-">Soo sult ghy // eeuwich bly // zijn by <rhyme label="e" type="m">God</rhyme>:</l>
        <l id="s8:l7" met="3" type="+-">'k Wensch dat ghy sijn <rhyme label="e" type="m" corresp="#s8:l6">gebod</rhyme></l>
        <l id="s8:l8" met="3" type="-+">In alles <rhyme label="d" type="m" corresp="#s8:l4">onderhoudt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Bidt dat ons' vrind haest vry mach <rhyme label="a" type="m">zijn</rhyme></l>
        <l id="s9:l2" met="4" type="+-">Van 't gesteen // van 't <rhyme label="b" type="m">geween</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Van 't verdrijt // dat hy <rhyme label="c" type="m">lijdt</rhyme></l>
        <l id="s9:l4" met="4" type="+-">Om sijn sonden in 't <rhyme label="d" type="m">Vagevyer</rhyme>:</l>
        <l id="s9:l5" met="4" type="-+">Dan sal verlost uyt all' sijn <rhyme label="a" type="m" corresp="#s9:l1">pijn</rhyme></l>
        <l id="s9:l6" met="6" type="+-">Onsen vrind // die ons mindt // bidden <rhyme label="e" type="m">we'er</rhyme></l>
        <l id="s9:l7" met="3" type="+-">Ons algemeenen <rhyme label="e" type="m" corresp="#s9:l6">Heer</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Dit 's d' Hemelsche <rhyme label="d" type="m" corresp="#s9:l4">manier</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

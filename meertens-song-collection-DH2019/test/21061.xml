  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">WIlt ghy, o Nieuw <rhyme label="a" type="f">gepaerde</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Staegh genieten heyl en <rhyme label="b" type="m">spoet</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Betracht en houdt in <rhyme label="a" type="f" corresp="#s1:l1">waerde</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">In waerde, in <rhyme label="a" type="f" corresp="#s1:l1">waerde</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">God en een gerust <rhyme label="b" type="m" corresp="#s1:l2">gemoet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Want God belooft sijn <rhyme label="a" type="f">zegen</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Die hem hier van herten <rhyme label="b" type="m">vreest</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">En die hier in sijn <rhyme label="a" type="f" corresp="#s2:l1">wegen</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">Sijn wegen, sijn <rhyme label="a" type="f" corresp="#s2:l1">wegen</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Met hem wandelt, na den <rhyme label="b" type="m" corresp="#s2:l2">Geest</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ghy Bruygom sult als <rhyme label="a" type="f">Koningh</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Wesen in u huys en <rhyme label="b" type="m">rijck</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">V Bruydt sal om u <rhyme label="a" type="f" corresp="#s3:l1">woningh</rhyme>,</l>
        <l id="s3:l4" met="2" type="-+">V woningh, u <rhyme label="a" type="f" corresp="#s3:l1">woningh</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Zijn een Wijngaerd-ranck <rhyme label="b" type="m" corresp="#s3:l2">gelijck</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Die met sijn soete <rhyme label="a" type="f">vruchten</rhyme></l>
        <l id="s4:l2" met="4" type="+-">(Die 's u jaer op jaer <rhyme label="b" type="m">aenbiet</rhyme>)</l>
        <l id="s4:l3" met="3" type="-+">Sal baren veel <rhyme label="a" type="f" corresp="#s4:l1">genuchten</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">Genuchten, <rhyme label="a" type="f" corresp="#s4:l1">genuchten</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">En verdrijven veel <rhyme label="b" type="m" corresp="#s4:l2">verdriet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Ghy sult als <rhyme label="a" type="f">Olijf-spruyten</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Sien u kind'ren aen u <rhyme label="b" type="m">disch</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Een soete rey <rhyme label="a" type="f" corresp="#s5:l1">besluyten</rhyme>,</l>
        <l id="s5:l4" met="2" type="-+">Besluyten, <rhyme label="a" type="f" corresp="#s5:l1">besluyten</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Tot u siels <rhyme label="b" type="m" corresp="#s5:l2">verheugenis</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">En al wat meer mach <rhyme label="a" type="f">wesen</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Al wat oyt een vrolijck <rhyme label="b" type="m">paer</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Genoten heeft voor <rhyme label="a" type="f" corresp="#s6:l1">desen</rhyme>,</l>
        <l id="s6:l4" met="2" type="-+">Voor desen, voor <rhyme label="a" type="f" corresp="#s6:l1">desen</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Sultge ontfangen met <rhyme label="b" type="m" corresp="#s6:l2">malkaer</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Alleen maer alst geseyt <rhyme label="a" type="f">is</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Soo ghy d'Heere vreest en <rhyme label="b" type="m">dient</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Maer noyt dit, dien bereydt <rhyme label="a" type="f" corresp="#s7:l1">is</rhyme>,</l>
        <l id="s7:l4" met="2" type="-+">Bereydt is, bereydt <rhyme label="a" type="f" corresp="#s7:l1">is</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Die hem niet en soeckt noch <rhyme label="b" type="m" corresp="#s7:l2">mient</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Maer stage ramp en <rhyme label="a" type="f">quellingh</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Sal haer stedes blijven <rhyme label="b" type="m">by</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Dus maeckt dat u <rhyme label="a" type="f" corresp="#s8:l1">versellingh</rhyme>,</l>
        <l id="s8:l4" met="2" type="-+">Versellingh, <rhyme label="a" type="f" corresp="#s8:l1">versellingh</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">In des Heeren gunste <rhyme label="b" type="m" corresp="#s8:l2">zy</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Dit wensch ick soo te <rhyme label="a" type="f">werden</rhyme></l>
        <l id="s9:l2" met="4" type="+-">Bruydegom met uwe <rhyme label="b" type="m">Bruydt</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">En dat ghy 't mooght <rhyme label="a" type="f" corresp="#s9:l1">volharden</rhyme>,</l>
        <l id="s9:l4" met="2" type="-+">Volharden, <rhyme label="a" type="f" corresp="#s9:l1">volharden</rhyme>,</l>
        <l id="s9:l5" met="4" type="+-">Trouw'lijck tot den eynde <rhyme label="b" type="m" corresp="#s9:l2">uyt</rhyme>.</l>
      </lg>
    </lg>
  </text>

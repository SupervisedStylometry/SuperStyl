    <melody>Patientie is zo goed kruid</melody>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">WAer toe ’t gebed Waer toe de <rhyme label="a" type="m">Mis</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Voor zielen die <rhyme label="b" type="f">af-lijven</rhyme>?</l>
        <l id="s1:l3" met="4" type="-+">Want daer den Boom gevallen <rhyme label="a" type="m" corresp="#s1:l1">is</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Daer zal hy moeten <rhyme label="b" type="f" corresp="#s1:l2">blijven</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Dus plag alleens te <rhyme label="b" type="f" corresp="#s1:l2">kijven</rhyme></l>
        <l id="s1:l6" met="3" type="-+">By sinte <rhyme label="c" type="m">Auggustijn</rhyme></l>
        <l id="s1:l7" met="4" type="+-">Eenen die genaemt <rhyme label="d" type="m">Aëer</rhyme></l>
        <l id="s1:l8" met="4" type="+-">Hier in leerde min noch <rhyme label="d" type="m" corresp="#s1:l7">meer</rhyme></l>
        <l id="s1:l9" met="3" type="-+">Als Luther en <rhyme label="c" type="m" corresp="#s1:l6">Calvijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Maer wat? den opgezwollen <rhyme label="a" type="m">dwaes</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Die hier toe was <rhyme label="b" type="f">vervallen</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Niet dan door vleesch en werelds <rhyme label="a" type="m" corresp="#s2:l1">aes</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En bleef niet langer <rhyme label="b" type="f" corresp="#s2:l2">mallen</rhyme>;</l>
        <l id="s2:l5" met="3" type="-+">Dan tot dat deur <rhyme label="b" type="f" corresp="#s2:l2">getallen</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Van texten, en van <rhyme label="c" type="m">re’en</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">d’Algemeyne Christen <rhyme label="d" type="m">Kerk</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Hem in d’aenvang van zijn <rhyme label="d" type="m" corresp="#s2:l7">werk</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Den hoomoed had <rhyme label="c" type="m" corresp="#s2:l6">vertre’en</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Des staet zijn neerlag noch ten <rhyme label="a" type="m">toon</rhyme></l>
        <l id="s3:l2" met="3" type="-+">(Men kanze zien en <rhyme label="b" type="f">lezen</rhyme>.)</l>
        <l id="s3:l3" met="4" type="-+">By d’alderwijsten van <rhyme label="a" type="m" corresp="#s3:l1">Hippoon</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Die hem heeft <rhyme label="b" type="f" corresp="#s3:l2">aengewezen</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Zijn kettery: mids <rhyme label="b" type="f" corresp="#s3:l2">dezen</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Dat Iudas <rhyme label="c" type="m">Machabee</rhyme></l>
        <l id="s3:l7" met="4" type="+-">Aelmis nae den Tempel <rhyme label="d" type="m">zand</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">End’ aldaer een <rhyme label="d" type="m" corresp="#s3:l7">offerand</rhyme></l>
        <l id="s3:l9" met="3" type="-+">Voor d’overleden <rhyme label="c" type="m" corresp="#s3:l6">dee</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">En ofmen schoon, vougt hy daer <rhyme label="a" type="m">by</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">In Goods beschreven <rhyme label="b" type="f">wetten</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Geen Text von, om uw’ <rhyme label="a" type="m" corresp="#s4:l1">kettery</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Daer mede te <rhyme label="b" type="f" corresp="#s4:l2">verzetten</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">Zoo dwingen wijze <rhyme label="b" type="f" corresp="#s4:l2">mette</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Manier van Godes <rhyme label="c" type="m">Kerk</rhyme></l>
        <l id="s4:l7" met="4" type="+-">Dubbeld over, die ghy <rhyme label="d" type="m">ziet</rhyme></l>
        <l id="s4:l8" met="4" type="+-">Dat alom de doon <rhyme label="d" type="m" corresp="#s4:l7">gebied</rhyme></l>
        <l id="s4:l9" met="3" type="-+">Aen God, door <rhyme label="c" type="m" corresp="#s4:l6">offerwerk</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Dus schreef wel eer de goe <rhyme label="a" type="m">Prelaet</rhyme>.</l>
        <l id="s5:l2" met="3" type="-+">En daer op wierd <rhyme label="b" type="f">verbannen</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Aërius den <rhyme label="a" type="m" corresp="#s5:l1">Apostaet</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Van all’ d’oprechte <rhyme label="b" type="f" corresp="#s5:l2">mannen</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Die nu dan weer <rhyme label="b" type="f" corresp="#s5:l2">aenspannen</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Wil mette zelve <rhyme label="c" type="m">Sect</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Moet zich niet verstoren, <rhyme label="d" type="m">als</rhyme></l>
        <l id="s5:l8" met="4" type="+-">Iemand hem van lering <rhyme label="d" type="m" corresp="#s5:l7">vals</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">Of kettery <rhyme label="c" type="m" corresp="#s5:l6">begekt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Te min alzoo Bernardus <rhyme label="a" type="m">ook</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">(Gelijk zijn pen doedt <rhyme label="b" type="f">blijken</rhyme>)</l>
        <l id="s6:l3" met="4" type="-+">Hier over ’t opgeblaze <rhyme label="a" type="m" corresp="#s6:l1">look</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Plag van <rhyme label="b" type="f" corresp="#s6:l2">d’Apostolijken</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Van doling door te <rhyme label="b" type="f" corresp="#s6:l2">strijken</rhyme>:</l>
        <l id="s6:l6" met="3" type="-+">En met een vollen <rhyme label="c" type="m">geest</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">Hen de hulp van <rhyme label="d" type="m">d’overleen</rhyme></l>
        <l id="s6:l8" met="4" type="+-">t’Overtuigen uittet <rhyme label="d" type="m" corresp="#s6:l7">geen</rhyme></l>
        <l id="s6:l9" met="3" type="-+">Men by Mattheus <rhyme label="c" type="m" corresp="#s6:l6">leest</rhyme>,</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Indiender is, sprak hy, een <rhyme label="a" type="m">zond</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Die niet en werd <rhyme label="b" type="f">vergeven</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Noch hier op deze aerdse <rhyme label="a" type="m" corresp="#s7:l1">grond</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Noch in ’t toekomend’ <rhyme label="b" type="f" corresp="#s7:l2">leven</rhyme>:</l>
        <l id="s7:l5" met="3" type="-+">Zoo moeter dan <rhyme label="b" type="f" corresp="#s7:l2">beneven</rhyme></l>
        <l id="s7:l6" met="3" type="-+">De Hel, en Hemel, <rhyme label="c" type="m">sijn</rhyme></l>
        <l id="s7:l7" met="4" type="+-">Noch een stede daert <rhyme label="d" type="m">misdaed</rhyme></l>
        <l id="s7:l8" met="4" type="+-">Van het ingesturve <rhyme label="d" type="m" corresp="#s7:l7">quaed</rhyme></l>
        <l id="s7:l9" met="3" type="-+">Gezuyverd werd door <rhyme label="c" type="m" corresp="#s7:l6">pijn</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Te recht: alzoo daer smet noch <rhyme label="a" type="m">vuil</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Ten Hemel kan <rhyme label="b" type="f">geraken</rhyme>:</l>
        <l id="s8:l3" met="4" type="-+">En datmen inde Helsche <rhyme label="a" type="m" corresp="#s8:l1">kuil</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Altijd zal moeten <rhyme label="b" type="f" corresp="#s8:l2">blaeken</rhyme>;</l>
        <l id="s8:l5" met="3" type="-+">Zoo moetmen facit <rhyme label="b" type="f" corresp="#s8:l2">maken</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Noch op een derde <rhyme label="c" type="m">stee</rhyme>.</l>
        <l id="s8:l7" met="4" type="+-">Daermen ook nae deze <rhyme label="d" type="m">tijd</rhyme></l>
        <l id="s8:l8" met="4" type="+-">Van de zonde werd <rhyme label="d" type="m" corresp="#s8:l7">bevrijd</rhyme>.</l>
        <l id="s8:l9" met="3" type="-+">En hier hou, ik het <rhyme label="c" type="m" corresp="#s8:l6">mee</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

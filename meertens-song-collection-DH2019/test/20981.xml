  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">2.Achterklap die queest, en <rhyme label="a" type="m">wondt</rhyme></l>
        <l id="s1:l2" met="4" type="+-">All' die willens daer nae <rhyme label="b" type="f">hooren</rhyme>:</l>
        <l id="s1:l3" met="4" type="+-">Soo maeckt dese vuyle <rhyme label="a" type="m" corresp="#s1:l1">sond'</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Dat die hoorders gaen <rhyme label="b" type="f" corresp="#s1:l2">verlooren</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Want sy quetzten hare <rhyme label="b" type="f" corresp="#s1:l2">ooren</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Met dit doodelijck <rhyme label="c" type="m">fenijn</rhyme>.</l>
        <l id="s1:l7" met="4" type="+-">Ach! wat mogen sy <rhyme label="d" type="f">beginnen</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Dat van buyten, en van <rhyme label="d" type="f" corresp="#s1:l7">binnen</rhyme>,</l>
        <l id="s1:l9" met="4" type="+-">Sy een quetsingh aen haer <rhyme label="c" type="m" corresp="#s1:l6">zijn</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Boven dit, soo wordt de <rhyme label="a" type="m">eer</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Van ons mede-mensch <rhyme label="b" type="f">benomen</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">'t Welck hem doet niet weynich <rhyme label="a" type="m" corresp="#s2:l1">zeer</rhyme>;</l>
        <l id="s2:l4" met="4" type="+-">'t Zijn gheen leuren, 't zijn gheen <rhyme label="b" type="f" corresp="#s2:l2">droomen</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">Slagen zijn 't die hart <rhyme label="b" type="f" corresp="#s2:l2">aen-komen</rhyme>.</l>
        <l id="s2:l6" met="4" type="+-">Fy! u Klappers: houdt doch <rhyme label="c" type="m">op</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Wilt uw' even-menschen <rhyme label="d" type="f">eeren</rhyme></l>
        <l id="s2:l8" met="4" type="+-">Met uw' tongh', en niet <rhyme label="d" type="f" corresp="#s2:l7">verneeren</rhyme>,</l>
        <l id="s2:l9" met="4" type="+-">Geeft aen d'Achterklap de <rhyme label="c" type="m" corresp="#s2:l6">schop</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Wat dunckt u, en quetst ghy <rhyme label="a" type="m">niet</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Met uw' tongh', uw' eyge <rhyme label="b" type="f">zielen</rhyme>?</l>
        <l id="s3:l3" met="4" type="+-">Is dit niet een groot <rhyme label="a" type="m" corresp="#s3:l1">verdriet</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Dat gh'uw' ziel soo gaet <rhyme label="b" type="f" corresp="#s3:l2">vernielen</rhyme>?</l>
        <l id="s3:l5" met="4" type="+-">Laet doch niet de helsche <rhyme label="b" type="f" corresp="#s3:l2">Fielen</rhyme></l>
        <l id="s3:l6" met="4" type="+-">U vervoeren na de <rhyme label="c" type="m">Hell'</rhyme>:</l>
        <l id="s3:l7" met="4" type="+-">Des wilt tot een beter <rhyme label="d" type="f">leven</rhyme></l>
        <l id="s3:l8" met="4" type="+-">U op deser stondt <rhyme label="d" type="f" corresp="#s3:l7">begeven</rhyme>;</l>
        <l id="s3:l9" met="4" type="+-">Van uw' mede-mensch spreeckt <rhyme label="c" type="m" corresp="#s3:l6">wel</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Bidt oock dat uw' sond' <rhyme label="a" type="m">vergeeft</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Iesus Christus Godt <rhyme label="b" type="f">Almachtich</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Maeckt dat ghy niet meer en <rhyme label="a" type="m" corresp="#s4:l1">sneeft</rhyme>;</l>
        <l id="s4:l4" met="4" type="+-">Dees vermaningh zijt <rhyme label="b" type="f" corresp="#s4:l2">gedachtich</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">'k Segg' u we'erom, arbeydt <rhyme label="b" type="f" corresp="#s4:l2">krachtich</rhyme>.</l>
        <l id="s4:l6" met="4" type="+-">We'er te geven naem en <rhyme label="c" type="m">faem</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Soo sult ghy van sond' <rhyme label="d" type="f">genesen</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Ons' Salighmaker <rhyme label="d" type="f" corresp="#s4:l7">wesen</rhyme></l>
        <l id="s4:l9" met="4" type="+-">T'alderhoochsten <rhyme label="c" type="m" corresp="#s4:l6">aengenaem</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Grooten Godt! ey! slaet eens <rhyme label="a" type="m">ne'er</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Uyt den Hemel uwe <rhyme label="b" type="f">oogen</rhyme>;</l>
        <l id="s5:l3" met="4" type="+-">Hebt met d'Achterklappers, <rhyme label="a" type="m" corresp="#s5:l1">Heer</rhyme>!</l>
        <l id="s5:l4" met="4" type="+-">Uyter harten groot <rhyme label="b" type="f" corresp="#s5:l2">meedoogen</rhyme>:</l>
        <l id="s5:l5" met="4" type="+-">Laet haer worden starck <rhyme label="b" type="f" corresp="#s5:l2">getoogen</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Door uws graty groote <rhyme label="c" type="m">kracht</rhyme>:</l>
        <l id="s5:l7" met="4" type="+-">Ey! gewaerdicht haer <rhyme label="d" type="f">t'ontfermen</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">Ey! gewaerdicht haer <rhyme label="d" type="f" corresp="#s5:l7">t'erbermen</rhyme>,</l>
        <l id="s5:l9" met="4" type="+-">Neemt op hare zielen <rhyme label="c" type="m" corresp="#s5:l6">acht</rhyme>.</l>
      </lg>
    </lg>

    <melody>O zalig heilig Bethlehem</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">GOdt hadt in 't Oude <rhyme label="a" type="m">Testament</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Een Heyligh Tempel <rhyme label="b" type="f">uyt-gekooren</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Waer in hy wilde als <rhyme label="a" type="m" corresp="#s1:l1">Present</rhyme></l>
        <l id="s1:l4" met="4" type="-+">'t Gebedt van yegelijk <rhyme label="b" type="f" corresp="#s1:l2">aenhooren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Hier was te samen eene <rhyme label="a" type="m">hoop</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Van 't volk, die Duyven, Ossen, <rhyme label="b" type="f">Schapen</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En diergelijks, hadden te <rhyme label="a" type="m" corresp="#s2:l1">koop</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">En Wisselaers om gelt te <rhyme label="b" type="f" corresp="#s2:l2">schrapen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Heer Jesus joegh se hier van <rhyme label="a" type="m">daen</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Een geessel maekte hy van <rhyme label="b" type="f">touwen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">En deed'se al-te-mael <rhyme label="a" type="m" corresp="#s3:l1">uytgaen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Os ende Schaep hy gingh <rhyme label="b" type="f" corresp="#s3:l2">uytstouwen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">De taeffelen worp hy om <rhyme label="a" type="m">veer</rhyme>:</l>
        <l id="s4:l2" met="4" type="-+">Brengh wegh, seydt hy haer, neemt ras <rhyme label="b" type="f">meede</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Dees dingen al, en maekt niet <rhyme label="a" type="m" corresp="#s4:l1">meer</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Mijns Vaders Huys Koopluyden <rhyme label="b" type="f" corresp="#s4:l2">steede</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">En niemant rade hy soo <rhyme label="a" type="m">stoudt</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Die welke door de Kerk des <rhyme label="b" type="f">Heeren</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Voorts eenigh last doordragen <rhyme label="a" type="m" corresp="#s5:l1">soudt</rhyme>.</l>
        <l id="s5:l4" met="4" type="-+">Daer na begost hy 't volk te <rhyme label="b" type="f" corresp="#s5:l2">leeren</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">En staet 'er niet geschreeven <rhyme label="a" type="m">klaer</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Mijn Huys dat is een Huys tot <rhyme label="b" type="f">beede</rhyme>?</l>
        <l id="s6:l3" met="4" type="-+">Gy maekt 't een hool voor <rhyme label="a" type="m" corresp="#s6:l1">Moordenaer</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Seydt hy tot haer met <rhyme label="b" type="f" corresp="#s6:l2">grammigheede</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Het was te voor <rhyme label="a" type="m">gepropheteert</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Den yver tegen de <rhyme label="b" type="f">Sondaren</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Die laten d'Wet, heeft mijn <rhyme label="a" type="m" corresp="#s7:l1">verheert</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Om uw' Huys, o Godt, te <rhyme label="b" type="f" corresp="#s7:l2">bewaren</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Alsoo dat sijn <rhyme label="a" type="m">Discipulen</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Nu wel om dees Schrifture <rhyme label="b" type="f">doghten</rhyme>:</l>
        <l id="s8:l3" met="4" type="-+">De Phariseesche <rhyme label="a" type="m" corresp="#s8:l1">Priesteren</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Hem tot 'er doodt te brengen <rhyme label="b" type="f" corresp="#s8:l2">soghten</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Sy seyden hem, uw' maght <rhyme label="a" type="m">uyt-spreekt</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Met welke gy begindt dees <rhyme label="b" type="f">saken</rhyme>.</l>
        <l id="s9:l3" met="4" type="-+">Hy seydt tot haer, dees Tempel <rhyme label="a" type="m" corresp="#s9:l1">breekt</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">In drie daegh sal ik hem <rhyme label="b" type="f" corresp="#s9:l2">opmaken</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Van sijne lighaem hy uyt <rhyme label="a" type="m">gaf</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Het welk hy weeder na drie <rhyme label="b" type="f">dagen</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Verwecken soude uyt het <rhyme label="a" type="m" corresp="#s10:l1">graf</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">'t Welk sijn Discipels daer na <rhyme label="b" type="f" corresp="#s10:l2">sagen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Bedenkt u menschen quaet en <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Soo Jesus sulken grooten <rhyme label="b" type="f">iever</rhyme></l>
        <l id="s11:l3" met="4" type="-+">In deesen Joodtschen Tempel <rhyme label="a" type="m" corresp="#s11:l1">doet</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Sal hy 't niet doen in d'onse <rhyme label="b" type="f" corresp="#s11:l2">liever</rhyme>?</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">In onse Kerken daer hy <rhyme label="a" type="m">woont</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Die hy veel hooger heeft <rhyme label="b" type="f">verheeven</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Daer hy sijn glory meerder <rhyme label="a" type="m" corresp="#s12:l1">toont</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Sijn Sacramenten heeft <rhyme label="b" type="f" corresp="#s12:l2">gegeeven</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Daerom laet ons met goe' <rhyme label="a" type="m">manier</rhyme></l>
        <l id="s13:l2" met="4" type="-+">Aen hem op-dragen ons <rhyme label="b" type="f">gebeeden</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Hem looven, ende danken <rhyme label="a" type="m" corresp="#s13:l1">hier</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Met liefde en <rhyme label="b" type="f" corresp="#s13:l2">eerbiedigheeden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>11792</id>
    <date>
      <year-start>1648</year-start>
      <year-end>1648</year-end>
    </date>
    <tags/>
    <melody>Il est vrai je le confesse</melody>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">GOd Abrahams, God der <rhyme label="a" type="f">Vad'ren</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">Onse <rhyme label="b" type="m">toeverlaet</rhyme>:</l>
        <l id="s1:l3" met="4" type="+-">Die uyt uwe volheydts <rhyme label="a" type="f" corresp="#s1:l1">adren</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">Alles schiep in <rhyme label="b" type="m" corresp="#s1:l2">maet</rhyme>:</l>
        <l id="s1:l5" met="4" type="+-">Die den Hemel en het <rhyme label="c" type="f">aerdrijck</rhyme>,</l>
        <l id="s1:l6" met="3" type="+-">En de ruyme <rhyme label="d" type="m">Zee</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">Tot eer, van u Naem soo <rhyme label="c" type="f" corresp="#s1:l5">schricklijck</rhyme>,</l>
        <l id="s1:l8" met="3" type="+-">Vast bezeegh'len <rhyme label="d" type="m" corresp="#s1:l6">dee</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Yder moet u macht wel <rhyme label="a" type="f">vreesen</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">Want u toorn is <rhyme label="b" type="m">swaer</rhyme>:</l>
        <l id="s2:l3" met="4" type="+-">Onverdraeghlijck is u <rhyme label="a" type="f" corresp="#s2:l1">wesen</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">Voor een stout <rhyme label="b" type="m" corresp="#s2:l2">sondaer</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Maer Heer! u <rhyme label="c" type="f">barmhertigheden</rhyme>,</l>
        <l id="s2:l6" met="3" type="+-">Strecken breedt en <rhyme label="d" type="m">wijt</rhyme>:</l>
        <l id="s2:l7" met="4" type="+-">Jae van eeuw tot <rhyme label="c" type="f" corresp="#s2:l5">eeuwigheden</rhyme>,</l>
        <l id="s2:l8" met="3" type="+-">Ghy barmhertigh <rhyme label="d" type="m" corresp="#s2:l6">zijt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Oock langhmoedigh en <rhyme label="a" type="f">genadigh</rhyme>,</l>
        <l id="s3:l2" met="3" type="+-">En die noo' <rhyme label="b" type="m">kastijt</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Zijt ghy Godt, en oock <rhyme label="a" type="f" corresp="#s3:l1">weldadigh</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">Die sijn sond <rhyme label="b" type="m" corresp="#s3:l2">belijt</rhyme>:</l>
        <l id="s3:l5" met="4" type="+-">Sy gaen 't sand aen Zee te <rhyme label="c" type="f">boven</rhyme>,</l>
        <l id="s3:l6" met="3" type="+-">En van pijn <rhyme label="d" type="m">gebuckt</rhyme>:</l>
        <l id="s3:l7" met="4" type="+-">En in kluysters gantsch <rhyme label="c" type="f" corresp="#s3:l5">verschoven</rhyme>,</l>
        <l id="s3:l8" met="3" type="+-">Ben ick slaefs <rhyme label="d" type="m" corresp="#s3:l6">gedruckt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Ick heb uwen toorn <rhyme label="a" type="f">ontsteecken</rhyme>,</l>
        <l id="s4:l2" met="3" type="+-">En veel quaets <rhyme label="b" type="m">verweckt</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Heer wilt doch u gramschap <rhyme label="a" type="f" corresp="#s4:l1">breecken</rhyme>,</l>
        <l id="s4:l4" met="3" type="+-">En my troost <rhyme label="b" type="m" corresp="#s4:l2">verstreckt</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">'k Wil de knie mijns herten <rhyme label="c" type="f">buygen</rhyme>,</l>
        <l id="s4:l6" met="3" type="+-">Heer ick heb <rhyme label="d" type="m">misdaen</rhyme>!</l>
        <l id="s4:l7" met="4" type="+-">Ick wil u mijn sond <rhyme label="c" type="f" corresp="#s4:l5">betuygen</rhyme>,</l>
        <l id="s4:l8" met="3" type="+-">Want ick ben <rhyme label="d" type="m" corresp="#s4:l6">belaen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Heere Godt zijt my <rhyme label="a" type="f">genadigh</rhyme>,</l>
        <l id="s5:l2" met="3" type="+-">My genadigh <rhyme label="b" type="m">zijt</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Ick bely een biecht <rhyme label="a" type="f" corresp="#s5:l1">misdadigh</rhyme>,</l>
        <l id="s5:l4" met="3" type="+-">Mijner sonden <rhyme label="b" type="m" corresp="#s5:l2">strijt</rhyme>:</l>
        <l id="s5:l5" met="4" type="+-">Heer ick sal in tranen <rhyme label="c" type="f">baden</rhyme>,</l>
        <l id="s5:l6" met="3" type="+-">En met rouw en <rhyme label="d" type="m">boet</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Lijf en ziel in u <rhyme label="c" type="f" corresp="#s5:l5">versaden</rhyme>,</l>
        <l id="s5:l8" met="3" type="+-">Ach u straf <rhyme label="d" type="m" corresp="#s5:l6">versoet</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Dan sal ick met mondt en <rhyme label="a" type="f">herten</rhyme>,</l>
        <l id="s6:l2" met="3" type="+-">Prijsen uwen <rhyme label="b" type="m">Lof</rhyme>:</l>
        <l id="s6:l3" met="4" type="+-">Dat ghy my uyt ramp en <rhyme label="a" type="f" corresp="#s6:l1">smerten</rhyme>,</l>
        <l id="s6:l4" met="3" type="+-">Geeft te roemen <rhyme label="b" type="m" corresp="#s6:l2">stof</rhyme>:</l>
        <l id="s6:l5" met="4" type="+-">'k Sal u dan mijn leven <rhyme label="c" type="f">prijsen</rhyme>,</l>
        <l id="s6:l6" met="3" type="+-">Voor u <rhyme label="d" type="m">goedigheydt</rhyme>:</l>
        <l id="s6:l7" met="4" type="+-">'s Hemels heyr sal 't lof <rhyme label="c" type="f" corresp="#s6:l5">bewijsen</rhyme>,</l>
        <l id="s6:l8" met="3" type="+-">In der <rhyme label="d" type="m" corresp="#s6:l6">eeuwigheydt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

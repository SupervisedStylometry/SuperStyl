    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">O Syon <rhyme label="a" type="f">uytverkoren</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Schoone vercierde <rhyme label="b" type="m">Bruydt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">De Wachters op den <rhyme label="a" type="f" corresp="#s1:l1">Thoren</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Die maken nu <rhyme label="b" type="m" corresp="#s1:l2">geluyt</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">En blasen de Basuyne seer <rhyme label="c" type="m">sterck</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Wilt toch haer stem <rhyme label="a" type="f" corresp="#s1:l1">aen-hooren</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Soo doet elck een fijn <rhyme label="c" type="m" corresp="#s1:l5">werck</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">De wacht is haer <rhyme label="a" type="f">bevolen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Te waerschouwen voor 't <rhyme label="b" type="m">quaet</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Die daer dwalen of <rhyme label="a" type="f" corresp="#s2:l1">dolen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Brengen ter rechter <rhyme label="b" type="m" corresp="#s2:l2">straet</rhyme>;</l>
        <l id="s2:l5" met="4" type="-+">En haer te leyden al metter <rhyme label="c" type="m">handt</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Tot Christum, in der <rhyme label="a" type="f" corresp="#s2:l1">scholen</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Van dat hooge <rhyme label="c" type="m" corresp="#s2:l5">verstandt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Op haer uyt-gangh wilt <rhyme label="a" type="f">mercken</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Volght haer geloove <rhyme label="b" type="m">naer</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Die soo getrouwe <rhyme label="a" type="f" corresp="#s3:l1">wercken</rhyme></l>
        <l id="s3:l4" met="3" type="-+">In 's Heeren Wijn-bergh <rhyme label="b" type="m" corresp="#s3:l2">klaer</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Om te ontfangen den goeden <rhyme label="c" type="m">loon</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Als komen sal den <rhyme label="a" type="f" corresp="#s3:l1">Stercken</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Boven uyt 's Hemels <rhyme label="c" type="m" corresp="#s3:l5">Throon</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Den Herder groot <rhyme label="a" type="f">verheven</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Die sal dan all' <rhyme label="b" type="m">gelijck</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Loon na sijn wercken <rhyme label="a" type="f" corresp="#s4:l1">geven</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Wie 't zy Arrem of <rhyme label="b" type="m" corresp="#s4:l2">Rijck</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Geenen Persoon en sal hy <rhyme label="c" type="m">aensien</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Die goet hebben <rhyme label="a" type="f" corresp="#s4:l1">bedreven</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">En sal geen quaet <rhyme label="c" type="m" corresp="#s4:l5">geschien</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Maer all' <rhyme label="a" type="f">ongehoorsame</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Werden dan hardt <rhyme label="b" type="m">gestraft</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Die hier op 's Heeren <rhyme label="a" type="f" corresp="#s5:l1">Name</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Weynigh hebben <rhyme label="b" type="m" corresp="#s5:l2">geschaft</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">En haren tijt niet en nemen <rhyme label="c" type="m">waer</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Die nochtans is <rhyme label="a" type="f" corresp="#s5:l1">bequame</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Kostelijck en <rhyme label="c" type="m" corresp="#s5:l5">dierbaer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Die hier den tijdt laet <rhyme label="a" type="f">henen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Sonder te doen <rhyme label="b" type="m">arbeydt</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">En vinden hier naer <rhyme label="a" type="f" corresp="#s6:l1">geenen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Soo den Engel wel <rhyme label="b" type="m" corresp="#s6:l2">seyt</rhyme>:</l>
        <l id="s6:l5" met="4" type="-+">Want hy gaet nu al vast op het <rhyme label="c" type="m">lest</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Daerom elck in 't <rhyme label="a" type="f" corresp="#s6:l1">gemene</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Dient nu te doen sijn <rhyme label="c" type="m" corresp="#s6:l5">best</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">De weeck is schier ten <rhyme label="a" type="f">ende</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">'t Is aen den <rhyme label="b" type="m">Sabbath-dagh</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Hy begint hem te <rhyme label="a" type="f" corresp="#s7:l1">wenden</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Om te komen met <rhyme label="b" type="m" corresp="#s7:l2">macht</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">En sijn soldye is oock <rhyme label="c" type="m">bereedt</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Daer vele door 't <rhyme label="a" type="f" corresp="#s7:l1">verblinden</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Hier nu niet van en <rhyme label="c" type="m" corresp="#s7:l5">weet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Oorlof, bidden en <rhyme label="a" type="f">waken</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Is nu van noode <rhyme label="b" type="m">meest</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Dat wy mogen <rhyme label="a" type="f" corresp="#s8:l1">geraken</rhyme></l>
        <l id="s8:l4" met="3" type="-+">In 's Heeren <rhyme label="b" type="m" corresp="#s8:l2">Bruylofts-feest</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Want hy mocht komen ter <rhyme label="c" type="m">midder-nacht</rhyme>:</l>
        <l id="s8:l6" met="3" type="-+">Ick hoore schier sijn <rhyme label="a" type="f" corresp="#s8:l1">sprake</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Doet als den knecht die <rhyme label="c" type="m" corresp="#s8:l5">wacht</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

    <melody>Ik voel nu mijn ziel dringen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">DIer-ghekochte vrome <rhyme label="a" type="f">herten</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Die in Christo zijt <rhyme label="b" type="m">volmaeckt</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Die hier nu in pijn en <rhyme label="a" type="f" corresp="#s1:l1">smerte</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">'s Hemels-soet inwendigh <rhyme label="b" type="m" corresp="#s1:l2">smaeckt</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Weet dat Christus heeft <rhyme label="c" type="m">bereydt</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Voor u d'eeuw'ghe <rhyme label="c" type="m" corresp="#s1:l5">saligheydt</rhyme>.</l>
        <l id="s1:l7" met="4" type="+-">Hier door streckt al u <rhyme label="d" type="f">begheeren</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Om te leven tot sijn <rhyme label="d" type="f" corresp="#s1:l7">eeren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Laet een Slaef sijn Heer wel <rhyme label="a" type="f">dienen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Om sijn slaghen te <rhyme label="b" type="m">ontgaen</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Kind'ren Godts het beter <rhyme label="a" type="f" corresp="#s2:l1">mienen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Nemen 't Jock met vreuchde <rhyme label="b" type="m" corresp="#s2:l2">aen</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Ghy zijt Christi vleesch en <rhyme label="c" type="m">bloedt</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Erfghenamen van sijn <rhyme label="c" type="m" corresp="#s2:l5">goedt</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Dus gaet ghy met hert en <rhyme label="d" type="f">sinnen</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Godts Gebodt op 't hooghst' <rhyme label="d" type="f" corresp="#s2:l7">beminnen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Ghy soeckt niet dit vliedend' <rhyme label="a" type="f">leven</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Want ghy vindt hier in gheen <rhyme label="b" type="m">rust</rhyme>.</l>
        <l id="s3:l3" met="4" type="+-">Och ! des Hemels blijvend' <rhyme label="a" type="f" corresp="#s3:l1">leven</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Is u hert, u sin en <rhyme label="b" type="m" corresp="#s3:l2">lust</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Daer is Leven sonder <rhyme label="c" type="m">Doodt</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Blijdtschap sonder anghst of <rhyme label="c" type="m" corresp="#s3:l5">noodt</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Volle Rijckdom, Staet en <rhyme label="d" type="f">Eeren</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Altijdt by den Heer der <rhyme label="d" type="f" corresp="#s3:l7">Heeren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Honger, dorst sal daer niet <rhyme label="a" type="f">wesen</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Quellingh, sieckte noch gheen <rhyme label="b" type="m">pijn</rhyme>:</l>
        <l id="s4:l3" met="4" type="+-">Noyt gheen arbeydt, sorgh noch <rhyme label="a" type="f" corresp="#s4:l1">vreese</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Daer sal koud' noch hitte <rhyme label="b" type="m" corresp="#s4:l2">zijn</rhyme>:</l>
        <l id="s4:l5" met="4" type="+-">Daer en is gheen haet of <rhyme label="c" type="m">nijdt</rhyme>:</l>
        <l id="s4:l6" met="4" type="+-">Noyt aenvechtingh, twist of <rhyme label="c" type="m" corresp="#s4:l5">strijdt</rhyme>.</l>
        <l id="s4:l7" met="4" type="+-">d'Een den ander sal <rhyme label="d" type="f">beminnen</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Ongheveynst van hert en <rhyme label="d" type="f" corresp="#s4:l7">sinnen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">d'Eng'len sult ghy daer <rhyme label="a" type="f">ghelijcken</rhyme></l>
        <l id="s5:l2" met="4" type="+-">In de Deucht en <rhyme label="b" type="m">Heyligheyt</rhyme>.</l>
        <l id="s5:l3" met="4" type="+-">Daer sal dan ten vollen <rhyme label="a" type="f" corresp="#s5:l1">blijcken</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Voor u Godes <rhyme label="b" type="m" corresp="#s5:l2">Heerlijckheyt</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">Vader, Soon en heyl'ghen <rhyme label="c" type="m">Geest</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Siet ghy daer, houdt met haer <rhyme label="c" type="m" corresp="#s5:l5">Feest</rhyme>.</l>
        <l id="s5:l7" met="4" type="+-">d'Enghelen u vrientschap <rhyme label="d" type="f">toonen</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">Altijdt vrolijck by u <rhyme label="d" type="f" corresp="#s5:l7">woonen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Och ! al rijmd' ick duysent <rhyme label="a" type="f">Jaren</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Schreef hier van tot allen <rhyme label="b" type="m">tijdt</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Noyt soud' ick het minst <rhyme label="a" type="f" corresp="#s6:l1">verklaren</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Hoe sy sullen zyn <rhyme label="b" type="m" corresp="#s6:l2">verblijdt</rhyme></l>
        <l id="s6:l5" met="4" type="+-">Die hier heyl'ghe Weghen <rhyme label="c" type="m">gaen</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Christum hebben <rhyme label="c" type="m" corresp="#s6:l5">aen-ghedaen</rhyme>.</l>
        <l id="s6:l7" met="4" type="+-">Och ! wat heeft mijn Ziel <rhyme label="d" type="f">verlanghen</rhyme></l>
        <l id="s6:l8" met="4" type="+-">Om dien vreuchde te <rhyme label="d" type="f" corresp="#s6:l7">ontfanghen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

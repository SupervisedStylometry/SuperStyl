  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">O Verheden vroege <rhyme label="a" type="f">morgen</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Met veel quaelen, ende <rhyme label="a" type="f" corresp="#s1:l1">sorgen</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Doen ick geenen troost en <rhyme label="b" type="m">hadt</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Liep ick, vloed' ick door de <rhyme label="c" type="f">bosschen</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Om meselven te <rhyme label="c" type="f" corresp="#s1:l4">verlosschen</rhyme></l>
        <l id="s1:l6" met="4" type="+-">Uyt de Kercker van de <rhyme label="b" type="m" corresp="#s1:l3">Stadt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Ick ontvlode myn <rhyme label="a" type="f">Gesellen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Om myn herte wat te <rhyme label="a" type="f" corresp="#s2:l1">stellen</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">En te stillen myn <rhyme label="b" type="m">gemoet</rhyme>.</l>
        <l id="s2:l4" met="4" type="+-">O geluckige <rhyme label="c" type="f">VVoestyne</rhyme>!</l>
        <l id="s2:l5" met="4" type="+-">Die my vrolyck sonder <rhyme label="c" type="f" corresp="#s2:l4">pyne</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Een vry leven leven <rhyme label="b" type="m" corresp="#s2:l3">doet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Hier regner ick tot den <rhyme label="a" type="f">twelfven</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Eenen Koninck van <rhyme label="a" type="f" corresp="#s3:l1">meselven</rhyme>:</l>
        <l id="s3:l3" met="4" type="+-">Hier mach ick veel mynen <rhyme label="b" type="m">tyt</rhyme></l>
        <l id="s3:l4" met="4" type="+-">In Lof-sangen, in <rhyme label="c" type="f">gebeden</rhyme></l>
        <l id="s3:l5" met="4" type="+-">VVel, en salighlyck <rhyme label="c" type="f" corresp="#s3:l4">besteden</rhyme>:</l>
        <l id="s3:l6" met="4" type="+-">Hier ben ick in <rhyme label="b" type="m" corresp="#s3:l3">d'Eenichyt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Hier ginck David <rhyme label="a" type="f">Jubileren</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Hier ginck Isac <rhyme label="a" type="f" corresp="#s4:l1">Mediteren</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Als den heeten dagh <rhyme label="b" type="m">vergongh</rhyme>:</l>
        <l id="s4:l4" met="4" type="+-">Zyn Rebecca ginck hy <rhyme label="c" type="f">tegen</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Die hy oock met volle <rhyme label="c" type="f" corresp="#s4:l4">segen</rhyme></l>
        <l id="s4:l6" met="4" type="+-">In zyn hert, en huys <rhyme label="b" type="m" corresp="#s4:l3">ontfongh</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Hier is Enoch <rhyme label="a" type="f">opgenomen</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">En Elias <rhyme label="a" type="f" corresp="#s5:l1">bygekomen</rhyme></l>
        <l id="s5:l3" met="4" type="+-">In een vierige <rhyme label="b" type="m">Carots</rhyme>:</l>
        <l id="s5:l4" met="4" type="+-">Zynen mantel liet hy <rhyme label="c" type="f">vallen</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Ende achte niet met <rhyme label="c" type="f" corresp="#s5:l4">allen</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Dat gy werelt acht soo <rhyme label="b" type="m" corresp="#s5:l3">trots</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Hier heeft Moyses hem <rhyme label="a" type="f">ontloken</rhyme></l>
        <l id="s6:l2" met="4" type="+-">In de clare wolck <rhyme label="a" type="f" corresp="#s6:l1">gedoken</rhyme>:</l>
        <l id="s6:l3" met="4" type="+-">Hy was boven op de <rhyme label="b" type="m">bergh</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">In de Blixem, in den <rhyme label="c" type="f">Donder</rhyme>;</l>
        <l id="s6:l5" met="4" type="+-">Als de reste die bleef <rhyme label="c" type="f" corresp="#s6:l4">onder</rhyme>.</l>
        <l id="s6:l6" met="4" type="+-">Moyses att daer Hemels <rhyme label="b" type="m" corresp="#s6:l3">Mergh</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Hier ver boven alle <rhyme label="a" type="f">sinnen</rhyme></l>
        <l id="s7:l2" met="4" type="+-">VVas Joannes eens gaen <rhyme label="a" type="f" corresp="#s7:l1">klimmen</rhyme>:</l>
        <l id="s7:l3" met="4" type="+-">Hy was wacker, en hy <rhyme label="b" type="m">sliep</rhyme>.</l>
        <l id="s7:l4" met="4" type="+-">Landen, sanden met de <rhyme label="c" type="f">Pachter</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">Al de werelt liet hy <rhyme label="c" type="f" corresp="#s7:l4">achter</rhyme>;</l>
        <l id="s7:l6" met="4" type="+-">Noch en hoorde, watmen <rhyme label="b" type="m" corresp="#s7:l3">riep</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Hy sagh by nae sonder <rhyme label="a" type="f">schemel</rhyme></l>
        <l id="s8:l2" met="4" type="+-">Regel recht den open <rhyme label="a" type="f" corresp="#s8:l1">Hemel</rhyme>;</l>
        <l id="s8:l3" met="4" type="+-">Hy aensagh die groote <rhyme label="b" type="m">Son</rhyme>;</l>
        <l id="s8:l4" met="4" type="+-">Die zyn herte quamp <rhyme label="c" type="f">doorschynen</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">En de Nevel dé <rhyme label="c" type="f" corresp="#s8:l4">verdwynen</rhyme></l>
        <l id="s8:l6" met="4" type="+-">Van der Zielen <rhyme label="b" type="m" corresp="#s8:l3">Horizon</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Nu gevoelde hy de <rhyme label="a" type="f">stralen</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Die hem deden <rhyme label="a" type="f" corresp="#s9:l1">nederdalen</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">En versincken in de <rhyme label="b" type="m">grondt</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">In den afgrondt, in het <rhyme label="c" type="f">wesen</rhyme>,</l>
        <l id="s9:l5" met="4" type="+-">VVaer hy oock is <rhyme label="c" type="f" corresp="#s9:l4">uytgeresen</rhyme>.</l>
        <l id="s9:l6" met="4" type="+-">O! Die hier getrouw in <rhyme label="b" type="m" corresp="#s9:l3">stondt</rhyme>!</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Christe Ziele wilde <rhyme label="a" type="f">leven</rhyme>,</l>
        <l id="s10:l2" met="4" type="+-">Syt vertrocken, syt <rhyme label="a" type="f" corresp="#s10:l1">verheven</rhyme>.</l>
        <l id="s10:l3" met="4" type="+-">Den getrouwen <rhyme label="b" type="m">Abraham</rhyme></l>
        <l id="s10:l4" met="4" type="+-">Moest hy niet zyn Stadt <rhyme label="c" type="f">verlaten</rhyme>,</l>
        <l id="s10:l5" met="4" type="+-">En zyn eyge maeschap <rhyme label="c" type="f" corresp="#s10:l4">haten</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">Doen hy zynen Godt <rhyme label="b" type="m" corresp="#s10:l3">vernam</rhyme>?</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Siet de Moeder Maeght des <rhyme label="a" type="f">Heere</rhyme></l>
        <l id="s11:l2" met="4" type="+-">Die geeft ons een goede <rhyme label="a" type="f" corresp="#s11:l1">leere</rhyme>,</l>
        <l id="s11:l3" met="4" type="+-">Als zy naer de <rhyme label="b" type="m">groetenis</rhyme></l>
        <l id="s11:l4" met="4" type="+-">Van het Eeuwigh VVoordt te <rhyme label="c" type="f">baren</rhyme>,</l>
        <l id="s11:l5" met="4" type="+-">Om dat selfde te <rhyme label="c" type="f" corresp="#s11:l4">bewaren</rhyme>,</l>
        <l id="s11:l6" met="4" type="+-">Spoedde naer de <rhyme label="b" type="m" corresp="#s11:l3">wildernis</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Daer geen VVolfven, daer geen <rhyme label="a" type="f">Beren</rhyme>,</l>
        <l id="s12:l2" met="4" type="+-">Daer geen schenders en <rhyme label="a" type="f" corresp="#s12:l1">passeren</rhyme>.</l>
        <l id="s12:l3" met="4" type="+-">O hoe salich is't <rhyme label="b" type="m">alhier</rhyme>!</l>
        <l id="s12:l4" met="4" type="+-">VVaer de vruchten altyt <rhyme label="c" type="f">groeyen</rhyme></l>
        <l id="s12:l5" met="4" type="+-">VVaer de vreugh den altyt <rhyme label="c" type="f" corresp="#s12:l4">bloeyen</rhyme>;</l>
        <l id="s12:l6" met="4" type="+-">Jesus is den <rhyme label="b" type="m" corresp="#s12:l3">hovenier</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Hier sprinckt water uyt de <rhyme label="a" type="f">steenen</rhyme>,</l>
        <l id="s13:l2" met="4" type="+-">Hier wou Christus oock <rhyme label="a" type="f" corresp="#s13:l1">verleenen</rhyme></l>
        <l id="s13:l3" met="4" type="+-">Menichvoudigh Broot, en <rhyme label="b" type="m">vis</rhyme>:</l>
        <l id="s13:l4" met="4" type="+-">Hier ô! vrinden wert <rhyme label="c" type="f">gemolcken</rhyme></l>
        <l id="s13:l5" met="4" type="+-">Het soet Manna uyt de <rhyme label="c" type="f" corresp="#s13:l4">wolcken</rhyme>;</l>
        <l id="s13:l6" met="4" type="+-">Hier is alle <rhyme label="b" type="m" corresp="#s13:l3">lavenis</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">Vlucht dan, en ontvlucht de <rhyme label="a" type="f">menschen</rhyme>,</l>
        <l id="s14:l2" met="4" type="+-">Laet dan, en verlaet u <rhyme label="a" type="f" corresp="#s14:l1">wenschen</rhyme>;</l>
        <l id="s14:l3" met="4" type="+-">Koopt den Acker goede <rhyme label="b" type="m">prys</rhyme>.</l>
        <l id="s14:l4" met="4" type="+-">Hier leyt eenen schat <rhyme label="c" type="f">verborgen</rhyme>,</l>
        <l id="s14:l5" met="4" type="+-">En een Perel van de <rhyme label="c" type="f" corresp="#s14:l4">morgen</rhyme>:</l>
        <l id="s14:l6" met="4" type="+-">Koopt myn ziele, syde <rhyme label="b" type="m" corresp="#s14:l3">wys</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

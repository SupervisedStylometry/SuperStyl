    <melody>Psalm 009 Datheen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">WT mijnes herten diepsten <rhyme label="a" type="m">gront</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Sal u Heer loven mijnen <rhyme label="a" type="m" corresp="#s1:l1">mont</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">V wonderen sal ick doen <rhyme label="b" type="f">blijcken</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Daer alle wonderen voor <rhyme label="b" type="f" corresp="#s1:l3">wijcken</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">In u o God ben ick <rhyme label="a" type="m">verblijt</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Die mijne vreucht alleene <rhyme label="a" type="m" corresp="#s2:l1">zijt</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">V grooten name wil ick <rhyme label="b" type="f">prijsen</rhyme></l>
        <l id="s2:l4" met="4" type="-+">En u lof-singend' eer <rhyme label="b" type="f" corresp="#s2:l3">bewijsen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Om dat ghy hebt door uwe <rhyme label="a" type="m">cracht</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Mijn vyant inde vlucht <rhyme label="a" type="m" corresp="#s3:l1">gebracht</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">En hem ter aerden <rhyme label="b" type="f">neer-geslagen</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Niet machtich u gesicht te <rhyme label="b" type="f" corresp="#s3:l3">dragen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Mijn sake suyver ende <rhyme label="a" type="m">slecht</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Hebt ghy doen comen voor het <rhyme label="a" type="m" corresp="#s4:l1">recht</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Ghy zijt op uwen throon <rhyme label="b" type="f">geseten</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Om een recht vonnis uyt te <rhyme label="b" type="f" corresp="#s4:l3">meten</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">De Heydenen hebt ghy <rhyme label="a" type="m">verdaen</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">De boose hebdy doen <rhyme label="a" type="m" corresp="#s5:l1">vergaen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">En om haer eeuwich te <rhyme label="b" type="f">beschamen</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Gants uytgedelget hare <rhyme label="b" type="f" corresp="#s5:l3">namen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Wel-aen, ghy vyant vol van <rhyme label="a" type="m">pracht</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Hebdy u opset al <rhyme label="a" type="m" corresp="#s6:l1">volbracht</rhyme></l>
        <l id="s6:l3" met="4" type="-+">In onse steden te <rhyme label="b" type="f">verstooren</rhyme>?</l>
        <l id="s6:l4" met="4" type="-+">Is haer gedachtenis <rhyme label="b" type="f" corresp="#s6:l3">verlooren</rhyme>?</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Voorseker neen. want God de <rhyme label="a" type="m">Heer</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Wiens rijck verandert <rhyme label="a" type="m" corresp="#s7:l1">nimmermeer</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Heeft op den richt-stoel sich <rhyme label="b" type="f">gestellet</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Daer hy een heylich oordeel <rhyme label="b" type="f" corresp="#s7:l3">vellet</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Te richten is de Heer <rhyme label="a" type="m">gereet</rhyme></l>
        <l id="s8:l2" met="4" type="-+">De gantsche werelt wijt en <rhyme label="a" type="m" corresp="#s8:l1">breet</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">In billickheyt met vaste <rhyme label="b" type="f">reden</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Straft hy de menschen hier <rhyme label="b" type="f" corresp="#s8:l3">beneden</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">God is de toevlucht en de <rhyme label="a" type="m">wacht</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Des armen die men weynich <rhyme label="a" type="m" corresp="#s9:l1">acht</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Een toevlucht in benaude <rhyme label="b" type="f">tijden</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Voor die hem soecken in het <rhyme label="b" type="f" corresp="#s9:l3">lijden</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Al die ghy u Heer maeckt <rhyme label="a" type="m">bekent</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Die soecken u in haer <rhyme label="a" type="m" corresp="#s10:l1">elent</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Want die op uwe goetheyt <rhyme label="b" type="f">bouwen</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Verlaety niet in haer <rhyme label="b" type="f" corresp="#s10:l3">benouwen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Looft nu met sangen onsen <rhyme label="a" type="m">God</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Wiens wooning' is in Sions <rhyme label="a" type="m" corresp="#s11:l1">slot</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Vertelt syn wonderlijcke <rhyme label="b" type="f">wercken</rhyme></l>
        <l id="s11:l4" met="4" type="-+">Dat yder mensche die mach <rhyme label="b" type="f" corresp="#s11:l3">mercken</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Hy dencket aen der vromen <rhyme label="a" type="m">bloet</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">En houtet diep in syn <rhyme label="a" type="m" corresp="#s12:l1">gemoet</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">'t Geschrey en sal hy niet <rhyme label="b" type="f">verachten</rhyme></l>
        <l id="s12:l4" met="4" type="-+">Der armen die hem doen haer <rhyme label="b" type="f" corresp="#s12:l3">clachten</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Weest my genadich lieve <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">En siet van uwen hemel <rhyme label="a" type="m" corresp="#s13:l1">neer</rhyme></l>
        <l id="s13:l3" met="4" type="-+">Wat ick van mijne haters <rhyme label="b" type="f">lijde</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Wt 's doodes poorten my <rhyme label="b" type="f" corresp="#s13:l3">bevrijde</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Dat uwen roem met <rhyme label="a" type="m">vrolijckheit</rhyme></l>
        <l id="s14:l2" met="4" type="-+">Van my in Sion sy <rhyme label="a" type="m" corresp="#s14:l1">verbreyt</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">En dat mijn herte hem <rhyme label="b" type="f">verheuge</rhyme></l>
        <l id="s14:l4" met="4" type="-+">Dat het u hulp genieten <rhyme label="b" type="f" corresp="#s14:l3">meuge</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">De heydens vallen in het <rhyme label="a" type="m">net</rhyme></l>
        <l id="s15:l2" met="4" type="-+">Dat sy my hadden <rhyme label="a" type="m" corresp="#s15:l1">toegeset</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">Den strick haer voeten heeft <rhyme label="b" type="f">gevangen</rhyme></l>
        <l id="s15:l4" met="4" type="-+">Dien sy my hadden <rhyme label="b" type="f" corresp="#s15:l3">voorgehangen</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Daer door wert God de Heer <rhyme label="a" type="m">bekent</rhyme></l>
        <l id="s16:l2" met="4" type="-+">Dat hy dit oordeel heeft <rhyme label="a" type="m" corresp="#s16:l1">volendt</rhyme>,</l>
        <l id="s16:l3" met="4" type="-+">De goddeloose comt te <rhyme label="b" type="f">schanden</rhyme></l>
        <l id="s16:l4" met="4" type="-+">Door twerck van syne eygen <rhyme label="b" type="f" corresp="#s16:l3">handen</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">De boose neygen tot haer <rhyme label="a" type="m">straf</rhyme>,</l>
        <l id="s17:l2" met="4" type="-+">Sy storten neder in het <rhyme label="a" type="m" corresp="#s17:l1">graf</rhyme>,</l>
        <l id="s17:l3" met="4" type="-+">Ter hellen werden sy <rhyme label="b" type="f">gesmeten</rhyme></l>
        <l id="s17:l4" met="4" type="-+">Die God moetwillichlijck <rhyme label="b" type="f" corresp="#s17:l3">vergeten</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">God sal hem die veel leets <rhyme label="a" type="m">geschiet</rhyme></l>
        <l id="s18:l2" met="4" type="-+">In eeuwicheyt vergeten <rhyme label="a" type="m" corresp="#s18:l1">niet</rhyme>.</l>
        <l id="s18:l3" met="4" type="-+">Syn hoope die hier is <rhyme label="b" type="f">mispresen</rhyme></l>
        <l id="s18:l4" met="4" type="-+">En sal niet altijt ydel <rhyme label="b" type="f" corresp="#s18:l3">wesen</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">Staet op, Heer, oeffent u <rhyme label="a" type="m">gebiet</rhyme>,</l>
        <l id="s19:l2" met="4" type="-+">Dat hem de mensch verstercke <rhyme label="a" type="m" corresp="#s19:l1">niet</rhyme>,</l>
        <l id="s19:l3" met="4" type="-+">Maer leydt de heydens voor't <rhyme label="b" type="f">gerichte</rhyme>,</l>
        <l id="s19:l4" met="4" type="-+">En steltse voor u <rhyme label="b" type="f" corresp="#s19:l3">aengesichte</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">O Heere God die eeuwich <rhyme label="a" type="m">leeft</rhyme></l>
        <l id="s20:l2" met="4" type="-+">Maeckt dat der boosen herte <rhyme label="a" type="m" corresp="#s20:l1">beeft</rhyme>,</l>
        <l id="s20:l3" met="4" type="-+">Doet hen verstaen (dit is mijn <rhyme label="b" type="f">wenschen</rhyme>)</l>
        <l id="s20:l4" met="4" type="-+">Dat sy niet zijn dan swacke <rhyme label="b" type="f" corresp="#s20:l3">menschen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

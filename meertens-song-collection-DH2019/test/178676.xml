  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Godt, verleen aan uwen <rhyme label="a" type="f">koning</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Uw rechten, vol <rhyme label="b" type="m">bescheidt</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Geef 's Konings zoone, uit uwe <rhyme label="a" type="f" corresp="#s1:l1">woning</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Uw heils <rhyme label="b" type="m" corresp="#s1:l2">gerechtigheit</rhyme>.</l>
        <l id="s1:l5" met="4" type="-+">Opdat hy uwen volke <rhyme label="c" type="f">richte</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Met recht, gelyk 't <rhyme label="d" type="m">behoort</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">En hy voor uwen armen <rhyme label="c" type="f" corresp="#s1:l5">stichte</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Gerechtigheit, naar 't <rhyme label="d" type="m" corresp="#s1:l6">woordt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">De bergen zullen vrede <rhyme label="a" type="f">draagen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Voor uwen volke, <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">De heuvels, naar uw <rhyme label="a" type="f" corresp="#s2:l1">welbehagen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Gerechtigheit en <rhyme label="b" type="m" corresp="#s2:l2">eer</rhyme>.</l>
        <l id="s2:l5" met="4" type="-+">Hy zal met recht tot heil <rhyme label="c" type="f">verschynen</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Van hen die hier, <rhyme label="d" type="m">gebukt</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">In hunnen noodt en angst <rhyme label="c" type="f" corresp="#s2:l5">verquynen</rhyme>;</l>
        <l id="s2:l8" met="3" type="-+">En slaan dien die hen <rhyme label="d" type="m" corresp="#s2:l6">drukt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Zy zullen u zoo lange <rhyme label="a" type="f">vreezen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Als Zon en Maan <rhyme label="b" type="m">bestaan</rhyme>.</l>
        <l id="s3:l3" met="4" type="-+">Zoo lang 'er een geslacht zal <rhyme label="a" type="f" corresp="#s3:l1">wezen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Zal nooit uw ryk <rhyme label="b" type="m" corresp="#s3:l2">vergaan</rhyme>.</l>
        <l id="s3:l5" met="4" type="-+">Hy zal gelyk een spade <rhyme label="c" type="f">regen</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Neêrdaalen op het <rhyme label="d" type="m">gras</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Als droppels die het landt, tot <rhyme label="c" type="f" corresp="#s3:l5">zegen</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Besproeien, en 't <rhyme label="d" type="m" corresp="#s3:l6">gewas</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">In zyne dagen zullen <rhyme label="a" type="f">bloeien</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Al die rechtvaardig <rhyme label="b" type="m">zyn</rhyme>.</l>
        <l id="s4:l3" met="4" type="-+">De vrede zal bestendig <rhyme label="a" type="f" corresp="#s4:l1">groeien</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Totdat de Maan niet <rhyme label="b" type="m" corresp="#s4:l2">schyn'</rhyme>.</l>
        <l id="s4:l5" met="4" type="-+">En hy zal zyne ryksgrens <rhyme label="c" type="f">strekken</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Van d'een tot d'andre <rhyme label="d" type="m">zee</rhyme>;</l>
        <l id="s4:l7" met="4" type="-+">En van den landtstroom 't al <rhyme label="c" type="f" corresp="#s4:l5">bedekken</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Tot 's wereldts end, met <rhyme label="d" type="m" corresp="#s4:l6">vreê</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Voor hem zal 't volk der <rhyme label="a" type="f">woestenyen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Ook knielen wel <rhyme label="b" type="m">gemoedt</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Terwyl de schaar van zyn <rhyme label="a" type="f" corresp="#s5:l1">partyen</rhyme></l>
        <l id="s5:l4" met="3" type="-+">'t Stof lekt van zynen <rhyme label="b" type="m" corresp="#s5:l2">voet</rhyme>.</l>
        <l id="s5:l5" met="4" type="-+">Dan zullen hem, met Tharsis <rhyme label="c" type="f">Vorsten</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">D'eilanden hulde <rhyme label="d" type="m">doen</rhyme>;</l>
        <l id="s5:l7" met="4" type="-+">Ja alle volken naar hem <rhyme label="c" type="f" corresp="#s5:l5">dorsten</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Als die hun wil <rhyme label="d" type="m" corresp="#s5:l6">behoên</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">De Koningen van Scheba <rhyme label="a" type="f">zullen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Hem eeren met <rhyme label="b" type="m">ontzagh</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">En Sebaas Vorsten 't hof <rhyme label="a" type="f" corresp="#s6:l1">vervullen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Met giften, dag op <rhyme label="b" type="m" corresp="#s6:l2">dag</rhyme>.</l>
        <l id="s6:l5" met="4" type="-+">Ja alle koningen zich <rhyme label="c" type="f">buigen</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">En 't gansche <rhyme label="d" type="m">heidendom</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Voor hem; en van zyn magt <rhyme label="c" type="f" corresp="#s6:l5">getuigen</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Die hy bewyst <rhyme label="d" type="m" corresp="#s6:l6">rontom</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Want hy zal den verdrukten <rhyme label="a" type="f">slaaken</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">En redden uit den <rhyme label="b" type="m">noodt</rhyme>;</l>
        <l id="s7:l3" met="4" type="-+">D'elendigen, die naar hem <rhyme label="a" type="f" corresp="#s7:l1">haaken</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Van alle hulpe <rhyme label="b" type="m" corresp="#s7:l2">ontbloot</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Verlossen: ook zal hy den <rhyme label="c" type="f">armen</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Nootdruftig in hun' <rhyme label="d" type="m">staat</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">Verschoonen, en hun ziel <rhyme label="c" type="f" corresp="#s7:l5">beschermen</rhyme>,</l>
        <l id="s7:l8" met="3" type="-+">Als hunnen <rhyme label="d" type="m" corresp="#s7:l6">toeverlaat</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Hy zal hun zielen ook <rhyme label="a" type="f">bevryden</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Van list en boos <rhyme label="b" type="m">gewelt</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Hun bloet, vergoten in het <rhyme label="a" type="f" corresp="#s8:l1">lyden</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Wordt by hem hoog <rhyme label="b" type="m" corresp="#s8:l2">gestelt</rhyme>.</l>
        <l id="s8:l5" met="4" type="-+">Hy zal in grooten voorspoet <rhyme label="c" type="f">leeven</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">En ook van Schebaas <rhyme label="d" type="m">gout</rhyme>,</l>
        <l id="s8:l7" met="4" type="-+">Miltdadig aan den armen <rhyme label="c" type="f" corresp="#s8:l5">geeven</rhyme>,</l>
        <l id="s8:l8" met="3" type="-+">Tot vreugde en <rhyme label="d" type="m" corresp="#s8:l6">onderhoudt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Hy zal gedurig voor hem <rhyme label="a" type="f">bidden</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Hem zeegnen en zyn <rhyme label="b" type="m">zaat</rhyme>.</l>
        <l id="s9:l3" met="4" type="-+">Een handt vol korens, dat in 't <rhyme label="a" type="f" corresp="#s9:l1">midden</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Van 't hoog gebergte <rhyme label="b" type="m" corresp="#s9:l2">staat</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Zal ruischen als de <rhyme label="c" type="f">Cederboomen</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Op Libans hoogen <rhyme label="d" type="m">kruin</rhyme>;</l>
        <l id="s9:l7" met="4" type="-+">De stadt zal in haar bloeien <rhyme label="c" type="f" corresp="#s9:l5">koomen</rhyme>,</l>
        <l id="s9:l8" met="3" type="-+">Als 't kruidt van veldt of <rhyme label="d" type="m" corresp="#s9:l6">tuin</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Zyn naam zal zyn in <rhyme label="a" type="f">eeuwigheden</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Zoo lang de Zon haar' <rhyme label="b" type="m">glans</rhyme></l>
        <l id="s10:l3" met="4" type="-+">Schiet van omhooge naar <rhyme label="a" type="f" corresp="#s10:l1">beneden</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">En blaakt in 's hemels <rhyme label="b" type="m" corresp="#s10:l2">trans</rhyme>.</l>
        <l id="s10:l5" met="4" type="-+">Men zal zyn' naam ook voort zien <rhyme label="c" type="f">planten</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Van kindt tot kindt <rhyme label="d" type="m">alom</rhyme>:</l>
        <l id="s10:l7" met="4" type="-+">Zyn zegen daalt van alle <rhyme label="c" type="f" corresp="#s10:l5">kanten</rhyme></l>
        <l id="s10:l8" met="3" type="-+">Uit hem op 't <rhyme label="d" type="m" corresp="#s10:l6">heidendom</rhyme>:</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Dies zullen hem de heidens <rhyme label="a" type="f">roemen</rhyme>.</l>
        <l id="s11:l2" met="3" type="-+">Gelooft zy Godt de <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Dien wy alleen den werker <rhyme label="a" type="f" corresp="#s11:l1">noemen</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Van wondren, t'zyner <rhyme label="b" type="m" corresp="#s11:l2">eer</rhyme>.</l>
        <l id="s11:l5" met="4" type="-+">Gelooft zy ook de naam des <rhyme label="c" type="f">Heeren</rhyme>,</l>
        <l id="s11:l6" met="3" type="-+">Verheerlykt <rhyme label="d" type="m">eeuwiglyk</rhyme>;</l>
        <l id="s11:l7" met="4" type="-+">Men zie zyn heerlykheit <rhyme label="c" type="f" corresp="#s11:l5">vermeêren</rhyme></l>
        <l id="s11:l8" met="3" type="-+">Op d'aarde in 't hemelsch <rhyme label="d" type="m" corresp="#s11:l6">ryk</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

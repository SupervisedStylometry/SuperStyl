    <melody>O Vader zijt gebeden</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">OVader, zyt ghebeden, <rhyme label="a" type="f">Dat</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Gy ons' sorg' en <rhyme label="b" type="m">nood</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Wegh neemt, en geeft ons heden <rhyme label="a" type="f" corresp="#s1:l1">Ons'</rhyme></l>
        <l id="s1:l4" met="3" type="-+">daeghelykse <rhyme label="b" type="m" corresp="#s1:l2">brood</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">En onderhoud <rhyme label="c" type="f">ons</rhyme></l>
        <l id="s1:l6" met="3" type="-+">leven Dat Gy ons hebt <rhyme label="c" type="f" corresp="#s1:l5">gegheven</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Tot dat ons scheidt de <rhyme label="b" type="m" corresp="#s1:l2">dood</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Uw goedheid wilt <rhyme label="a" type="f">bewysen</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Geeft elk Uw hulp en <rhyme label="b" type="m">raed</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Wilt d'hongerige <rhyme label="a" type="f" corresp="#s2:l1">spysen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Met nooddruft haer <rhyme label="b" type="m" corresp="#s2:l2">versaed</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Op dat wy alle <rhyme label="c" type="f">loven</rhyme></l>
        <l id="s2:l6" met="3" type="-+">U Groote God hier <rhyme label="c" type="f" corresp="#s2:l5">boven</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Die nooit Sijn volk <rhyme label="b" type="m" corresp="#s2:l2">verlaet</rhyme>.</l>
      </lg>
    </lg>
  </text>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="+-">
          <rhyme label="a" type="m">SPeelnootjes</rhyme>
        </l>
        <l id="s1:l2" met="3" type="-+">Begint gy nu te <rhyme label="b" type="f">droomen</rhyme>?</l>
        <l id="s1:l3" met="4" type="+-">Hoe vvel vvaarom komt ghy <rhyme label="c" type="m">hier</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Of denkt gy nu <rhyme label="d" type="m">daarom</rhyme>,</l>
        <l id="s1:l5" met="2" type="-+">Hoe de <rhyme label="d" type="m" corresp="#s1:l4">bruygom</rhyme></l>
        <l id="s1:l6" met="6" type="+-">Met sijn bruyt nu speelen, strelen met <rhyme label="c" type="m" corresp="#s1:l3">playsier</rhyme>;</l>
        <l id="s1:l7" met="2" type="+-">'K wed gy <rhyme label="e" type="m">denckt</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Ach! mogt de tyd eens <rhyme label="b" type="f" corresp="#s1:l2">komen</rhyme></l>
        <l id="s1:l9" met="4" type="+-">Om te komen in de <rhyme label="f" type="m">staat</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">want al myn hert en <rhyme label="g" type="m">sin</rhyme></l>
        <l id="s1:l11" met="2" type="-+">Die schept daar <rhyme label="g" type="m" corresp="#s1:l10">in</rhyme></l>
        <l id="s1:l12" met="6" type="+-">Een bevalligh wesen, en over soet <rhyme label="f" type="m" corresp="#s1:l9">gelaat</rhyme>;</l>
        <l id="s1:l13" met="2" type="-+">Doch mijn <rhyme label="h" type="f">Speelnootje</rhyme></l>
        <l id="s1:l14" met="3" type="+-">Draagt nu geen <rhyme label="i" type="m">verdriet</rhyme>,</l>
        <l id="s1:l15" met="2" type="-+">Wacht <rhyme label="h" type="f" corresp="#s1:l13">Cupidootje</rhyme></l>
        <l id="s1:l16" met="3" type="+-">Alree na u <rhyme label="i" type="m" corresp="#s1:l14">schiet</rhyme>:</l>
        <l id="s1:l17" met="2" type="-+">Weest bly,, by <rhyme label="j" type="m">my</rhyme></l>
        <l id="s1:l18" met="2" type="-+">En weest <rhyme label="k" type="m">gerust</rhyme>;</l>
        <l id="s1:l19" met="3" type="+-">En singt, Ende <rhyme label="l" type="m">springt</rhyme></l>
        <l id="s1:l20" met="3" type="-+">Op dat gy werd <rhyme label="k" type="m" corresp="#s1:l18">gekust</rhyme>.</l>
      </lg>

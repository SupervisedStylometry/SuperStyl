    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">In Israel was een <rhyme label="a" type="m">Propheet</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Dier ons de Schrift Elias <rhyme label="a" type="m" corresp="#s1:l1">heet</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Die brack her voor ghelijck eene <rhyme label="b" type="m">vyer</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">En maeckte alle voor-raedt <rhyme label="b" type="m" corresp="#s1:l3">dier</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Veel sturven in al sulcken <rhyme label="c" type="m">noot</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Hy straftste van haer traegheyt <rhyme label="c" type="m" corresp="#s1:l5">groot</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Aen beyde sijden gaet ghy <rhyme label="a" type="m">manck</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Sprack hy en dat al veel te <rhyme label="a" type="m" corresp="#s2:l1">lanck</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Is die Heer Godt so dient hem <rhyme label="b" type="m">recht</rhyme>:</l>
        <l id="s2:l4" met="4" type="-+">Ist Baal so weest sijnen <rhyme label="b" type="m" corresp="#s2:l3">knecht</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Spoedt u en hanght sulcken Godt <rhyme label="c" type="m">an</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Die u met vyer antwoorden <rhyme label="c" type="m" corresp="#s2:l5">kan</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Konden sy ‘t alle wel <rhyme label="a" type="m">verstaen</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">En lietent recht ter herten <rhyme label="a" type="m" corresp="#s3:l1">gaen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Het ghene dat ons Godt sendt <rhyme label="b" type="m">neer</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Door Elia en andere <rhyme label="b" type="m" corresp="#s3:l3">meer</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Die ‘t haer wel laten duncken <rhyme label="c" type="m">schoon</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Het sou anders komen ten <rhyme label="c" type="m" corresp="#s3:l5">toon</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Och dat hem elck also <rhyme label="a" type="m">bedocht</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Dat hy met waerheyt spreken <rhyme label="a" type="m" corresp="#s4:l1">mocht</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Ick vraeg nae Hemel noch nae <rhyme label="b" type="m">aerdt</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Mijn Godt is my veel meerder <rhyme label="b" type="m" corresp="#s4:l3">waerdt</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Ick weet ter werelt gheenen <rhyme label="c" type="m">dingh</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Dat ick hier te ghelijcken <rhyme label="c" type="m" corresp="#s4:l5">bringh</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">By Vorstendom of <rhyme label="a" type="m">Konninckrijck</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">De wijsheyt Gods is niet <rhyme label="a" type="m" corresp="#s5:l1">ghelijck</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Want rijckdom is teghen haer <rhyme label="b" type="m">niet</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Noch edel steen vaet die <rhyme label="b" type="m" corresp="#s5:l3">bediedt</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Teghen haer is dat ghelt als <rhyme label="c" type="m">sant</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Als dreck is silver hoe <rhyme label="c" type="m" corresp="#s5:l5">playsant</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Wie dit mach spreken inder <rhyme label="a" type="m">kracht</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">En sijn ghewin voor schade <rhyme label="a" type="m" corresp="#s6:l1">acht</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Om Christus wille ende <rhyme label="b" type="m">woort</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Die brenght alsulcke vruchten <rhyme label="b" type="m" corresp="#s6:l3">voort</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Die tot ghesontheyt dienen <rhyme label="c" type="m">fris</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Van die noch ongheloovigh <rhyme label="c" type="m" corresp="#s6:l5">is</rhyme></l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">So yemant anders is <rhyme label="a" type="m">ghesint</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Dat hy yet boven my <rhyme label="a" type="m" corresp="#s7:l1">bemint</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Sijn Vader, Moeder, niet en <rhyme label="b" type="m">haet</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Sijn eyghen leven niet <rhyme label="b" type="m" corresp="#s7:l3">verlaet</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Maer voor mijn Kruysse is <rhyme label="c" type="m">verveert</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Spreeckt Christus die is mijns niet <rhyme label="c" type="m" corresp="#s7:l5">weert</rhyme></l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Vervloeckt worden sy alle <rhyme label="a" type="m">ghelijck</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Die ‘s Heeren werck doet <rhyme label="a" type="m" corresp="#s8:l1">traghelijck</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Die niet en acht dat hy Godt <rhyme label="b" type="m">kent</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Wert van Godt selver ook <rhyme label="b" type="m" corresp="#s8:l3">verblent</rhyme></l>
        <l id="s8:l5" met="4" type="-+">Te doen het ghene niet <rhyme label="c" type="m">betaemt</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Vol onrechtveerdigheyt <rhyme label="c" type="m" corresp="#s8:l5">versaemt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Ist dat een yser plomp <rhyme label="a" type="m">verstijft</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Aen die wat ongheslepen <rhyme label="a" type="m" corresp="#s9:l1">blijft</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">So moetmen dat met gantscher <rhyme label="b" type="m">macht</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Wederom scherpen dit <rhyme label="b" type="m" corresp="#s9:l3">betracht</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Insghelijcks met alsulck <rhyme label="c" type="m">bescheyt</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Volcht de wijsheyt der <rhyme label="c" type="m" corresp="#s9:l5">neersticheyt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Laet ons de Schrift toch nemen <rhyme label="a" type="m">waer</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Sy tuycht ons helder ende <rhyme label="a" type="m" corresp="#s10:l1">klaer</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Dat niemant met <rhyme label="b" type="m">lichtvaerdicheyt</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Voor Gods Heerlijcke <rhyme label="b" type="m" corresp="#s10:l3">Majesteyt</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Sal blijven staen in sijn <rhyme label="c" type="m">gherecht</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Iae nauwelijck den vromen <rhyme label="c" type="m" corresp="#s10:l5">knecht</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">In u voornemen weest niet <rhyme label="a" type="m">traegh</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Schout ydelheyt by nacht en <rhyme label="a" type="m" corresp="#s11:l1">daegh</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Het heeft Christo so veel <rhyme label="b" type="m">ghekost</rhyme></l>
        <l id="s11:l4" met="4" type="-+">Eer hy ons daer uyt heeft <rhyme label="b" type="m" corresp="#s11:l3">verlost</rhyme></l>
        <l id="s11:l5" met="4" type="-+">Gout, Silver nochte Paerlen <rhyme label="c" type="m">goet</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">Maer sijn dierbare roode <rhyme label="c" type="m" corresp="#s11:l5">bloet</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Uwen gheest nimmer blussen <rhyme label="a" type="m">laet</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Maer als Levitico ses <rhyme label="a" type="m" corresp="#s12:l1">staet</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">In Esaia veertigh <rhyme label="b" type="m">mee</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Moe noch mat blijft in gheenen <rhyme label="b" type="m" corresp="#s12:l3">stee</rhyme>,</l>
        <l id="s12:l5" met="4" type="-+">Hoopt op Godt hy gheeft nieuwe <rhyme label="c" type="m">kracht</rhyme>,</l>
        <l id="s12:l6" met="4" type="-+">Dat vyer moet neerstigh zijn <rhyme label="c" type="m" corresp="#s12:l5">ghewacht</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Zaeyt uwe zaedt des morghens <rhyme label="a" type="m">vroegh</rhyme></l>
        <l id="s13:l2" met="4" type="-+">’s Avonts laet niet staen die <rhyme label="a" type="m" corresp="#s13:l1">ploegh</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Ghy weet gheen uyr u neerstigh <rhyme label="b" type="m">spoet</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">U Heer komt als ghy ‘t niet <rhyme label="b" type="m" corresp="#s13:l3">vermoedt</rhyme>,</l>
        <l id="s13:l5" met="4" type="-+">Sijn loon is voor hem dat hy <rhyme label="c" type="m">gheeft</rhyme>,</l>
        <l id="s13:l6" met="4" type="-+">Die oprecht ende Godloos <rhyme label="c" type="m" corresp="#s13:l5">leeft</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Hoort wat de gheest Epheso <rhyme label="a" type="m">seyt</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">U arbeyt werckt <rhyme label="a" type="m" corresp="#s14:l1">verduldigheyt</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Weet ick en dat ghy ‘t quaet niet <rhyme label="b" type="m">lijdt</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">Maer d’eerste liefde zydy <rhyme label="b" type="m" corresp="#s14:l3">quijt</rhyme>,</l>
        <l id="s14:l5" met="4" type="-+">Betert u ras of ick brengh <rhyme label="c" type="m">mee</rhyme></l>
        <l id="s14:l6" met="4" type="-+">Iou kandelaer van sijnen <rhyme label="c" type="m" corresp="#s14:l5">stee</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Alle die loopen nae een <rhyme label="a" type="m">prijs</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">Sy loopen al, maer hy is <rhyme label="a" type="m" corresp="#s15:l1">wijs</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">Die so loopt dat hy krijght die <rhyme label="b" type="m">kroon</rhyme>,</l>
        <l id="s15:l4" met="4" type="-+">Daer sullen veel sprack Christus <rhyme label="b" type="m" corresp="#s15:l3">schoon</rhyme></l>
        <l id="s15:l5" met="4" type="-+">Arbeyden om sulx te <rhyme label="c" type="m">bevroen</rhyme>,</l>
        <l id="s15:l6" met="4" type="-+">En sullent niet konnen <rhyme label="c" type="m" corresp="#s15:l5">ghedoen</rhyme></l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">In drie deelen sal het volck <rhyme label="a" type="m">staen</rhyme></l>
        <l id="s16:l2" met="4" type="-+">Die twe parten sullen <rhyme label="a" type="m" corresp="#s16:l1">vergaen</rhyme>,</l>
        <l id="s16:l3" met="4" type="-+">Die derde moet gheloutert <rhyme label="b" type="m">zijn</rhyme></l>
        <l id="s16:l4" met="4" type="-+">Met vervolgh druck lijden en <rhyme label="b" type="m" corresp="#s16:l3">pijn</rhyme>,</l>
        <l id="s16:l5" met="4" type="-+">Die hem dan weerdigh zijn <rhyme label="c" type="m">alleen</rhyme>,</l>
        <l id="s16:l6" met="4" type="-+">Rusten alle met hem in <rhyme label="c" type="m" corresp="#s16:l5">vreen</rhyme></l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Oock zijnse al niet wel <rhyme label="a" type="m">ontfaen</rhyme>,</l>
        <l id="s17:l2" met="4" type="-+">Die ten deele volcht ‘s Heeren <rhyme label="a" type="m" corresp="#s17:l1">vermaen</rhyme>,</l>
        <l id="s17:l3" met="4" type="-+">En ginghen tot des Heeren <rhyme label="b" type="m">Feest</rhyme>,</l>
        <l id="s17:l4" met="4" type="-+">Want daer is eenen vrient <rhyme label="b" type="m" corresp="#s17:l3">gheweest</rhyme>,</l>
        <l id="s17:l5" met="4" type="-+">Die en hadde gheen Brytlofts <rhyme label="c" type="m">kleet</rhyme>,</l>
        <l id="s17:l6" met="4" type="-+">Waerom de Koninck hem <rhyme label="c" type="m" corresp="#s17:l5">versneet</rhyme></l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Noch gingender thien Maeghden <rhyme label="a" type="m">uyt</rhyme></l>
        <l id="s18:l2" met="4" type="-+">Met lampen al hoort mijn <rhyme label="a" type="m" corresp="#s18:l1">beduydt</rhyme>,</l>
        <l id="s18:l3" met="4" type="-+">Vijf warender slechs <rhyme label="b" type="m">aenghenaem</rhyme>,</l>
        <l id="s18:l4" met="4" type="-+">Maer d’ander waren niet <rhyme label="b" type="m" corresp="#s18:l3">bequaem</rhyme>,</l>
        <l id="s18:l5" met="4" type="-+">Om dat elck sijn licht niet <rhyme label="c" type="m">ontstack</rhyme>,</l>
        <l id="s18:l6" met="4" type="-+">Want Oly deese vijf <rhyme label="c" type="m" corresp="#s18:l5">gebrack</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">Is ‘t den gheenen alsoo <rhyme label="a" type="m">vergaen</rhyme>,</l>
        <l id="s19:l2" met="4" type="-+">Die ree veel arbeydts heeft <rhyme label="a" type="m" corresp="#s19:l1">ghedaen</rhyme>,</l>
        <l id="s19:l3" met="4" type="-+">En al mee loopt al nae den <rhyme label="b" type="m">prijs</rhyme></l>
        <l id="s19:l4" met="4" type="-+">Ter Bruyloft komt als Maghet <rhyme label="b" type="m" corresp="#s19:l3">wijs</rhyme>,</l>
        <l id="s19:l5" met="4" type="-+">Waer sullen sy verschijnen <rhyme label="c" type="m">hoort</rhyme>,</l>
        <l id="s19:l6" met="4" type="-+">Die niet en achten Godes <rhyme label="c" type="m" corresp="#s19:l5">woort</rhyme>?</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">Siet toch eens op het <rhyme label="a" type="m">onderscheyt</rhyme>,</l>
        <l id="s20:l2" met="4" type="-+">Dat Malachias drie uyt <rhyme label="a" type="m" corresp="#s20:l1">leyt</rhyme>,</l>
        <l id="s20:l3" met="4" type="-+">Een dach die als een oven <rhyme label="b" type="m">brandt</rhyme></l>
        <l id="s20:l4" met="4" type="-+">Maeckt de Godloosen al te <rhyme label="b" type="m" corresp="#s20:l3">schant</rhyme>,</l>
        <l id="s20:l5" met="4" type="-+">Wie vreest des Heeren name <rhyme label="c" type="m">soet</rhyme>,</l>
        <l id="s20:l6" met="4" type="-+">Sal leven houtet my te <rhyme label="c" type="m" corresp="#s20:l5">goet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

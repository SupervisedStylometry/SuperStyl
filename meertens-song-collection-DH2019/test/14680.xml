    <melody>Het viel een hemelse dauw</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">DOen nu het kindt <rhyme label="a" type="f">Marie</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Was veertich daghen <rhyme label="b" type="m">oudt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Ginck sy daer in <rhyme label="a" type="f" corresp="#s1:l1">voortij'en</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Den Tempel was <rhyme label="b" type="m" corresp="#s1:l2">gheboudt</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Om hem te <rhyme label="c" type="f">presenteren</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Soo Moyses Wet <rhyme label="d" type="m">gheboodt</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Hoe-wel sy met den <rhyme label="c" type="f" corresp="#s1:l5">Heere</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Dat niet en had van <rhyme label="d" type="m" corresp="#s1:l6">noodt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Twee Tortel-duyfjes <rhyme label="a" type="f">kleyne</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Bracht sy tot <rhyme label="b" type="m">suyveringh'</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Hoe-wel dees Maget <rhyme label="a" type="f" corresp="#s2:l1">reyne</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Noyt eenigh smet <rhyme label="b" type="m" corresp="#s2:l2">ontfingh'</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">Wie sal met penne <rhyme label="c" type="f">schrijven</rhyme></l>
        <l id="s2:l6" met="3" type="-+">De groot <rhyme label="d" type="m">ootmoedicheyt</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Die d'Heyl'ghen Geest tot <rhyme label="c" type="f" corresp="#s2:l5">Wijve</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Koos vander <rhyme label="d" type="m" corresp="#s2:l6">eeuwicheyt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Een oudt Man <rhyme label="a" type="f">Symeone</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Was langhen tijdt <rhyme label="b" type="m">belooft</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Dat hem den Heer soud' <rhyme label="a" type="f" corresp="#s3:l1">toonen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Die breecken soud' het <rhyme label="b" type="m" corresp="#s3:l2">hooft</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Van d'Helsche boose <rhyme label="c" type="f">Coningh</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Al eer de kille <rhyme label="d" type="m">Doodt</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Wt dese aerdtsche <rhyme label="c" type="f" corresp="#s3:l5">woningh</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Hem ruckten in haer <rhyme label="d" type="m" corresp="#s3:l6">schoot</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Doen dees dan had <rhyme label="a" type="f">vernomen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Dat hy den Heer soud' <rhyme label="b" type="m">sien</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Is haestich daer <rhyme label="a" type="f" corresp="#s4:l1">gekomen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Om alle eer te <rhyme label="b" type="m" corresp="#s4:l2">bie'n</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Hy druckte Iesus <rhyme label="c" type="f">wangen</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Aen sijn vergrijsde <rhyme label="d" type="m">hayr</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Daer hy met groot <rhyme label="c" type="f" corresp="#s4:l5">verlangen</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Na wenst had menich <rhyme label="d" type="m" corresp="#s4:l6">Iaer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Daer sach hy <rhyme label="a" type="f">opgetogen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Met yverich <rhyme label="b" type="m">begeer</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">En tranen in de <rhyme label="a" type="f" corresp="#s5:l1">oogen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Het lijden van sijn <rhyme label="b" type="m" corresp="#s5:l2">Heer</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Och sprack hy sonder <rhyme label="c" type="f">mijden</rhyme>:</l>
        <l id="s5:l6" met="3" type="-+">Het swaert van droefheyt <rhyme label="d" type="m">sal</rhyme></l>
        <l id="s5:l7" met="3" type="-+">V Vrouw, het hert <rhyme label="c" type="f" corresp="#s5:l5">doorsnijden</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Soo bitter als een <rhyme label="d" type="m" corresp="#s5:l6">gal</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Daer sachmen strack de <rhyme label="a" type="f">Reyne</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">En witte <rhyme label="b" type="m">Roose-gaert</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Haer tranen als <rhyme label="a" type="f" corresp="#s6:l1">Fonteynen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Neer storten op der <rhyme label="b" type="m" corresp="#s6:l2">Aerdt</rhyme>:</l>
        <l id="s6:l5" met="3" type="-+">Sal sprack sy soo mijn <rhyme label="c" type="f">kinde</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Een wreede doodt <rhyme label="d" type="m">ontfaen</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Ach Soone mijn <rhyme label="c" type="f" corresp="#s6:l5">beminde</rhyme></l>
        <l id="s6:l8" met="3" type="-+">Laet mijn dan voor u <rhyme label="d" type="m" corresp="#s6:l6">gaen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">O Symeon u <rhyme label="a" type="f">woorden</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Zijn al ten deel <rhyme label="b" type="m">volbracht</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Siet hoe dat sy <rhyme label="a" type="f" corresp="#s7:l1">doorboorden</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Haer moederlijck <rhyme label="b" type="m" corresp="#s7:l2">ghedacht</rhyme>:</l>
        <l id="s7:l5" met="3" type="-+">Hoe heeft het swaert van <rhyme label="c" type="f">rouwe</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Doorsneden al haer <rhyme label="d" type="m">hert</rhyme>:</l>
        <l id="s7:l7" met="3" type="-+">Want hoe kan eenich <rhyme label="c" type="f" corresp="#s7:l5">Vrouwe</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Ontfangen meerder <rhyme label="d" type="m" corresp="#s7:l6">smert</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Laet dese droeve <rhyme label="a" type="f">tranen</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Maria Moeder <rhyme label="b" type="m">Godts</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">V Soon tot hulp <rhyme label="a" type="f" corresp="#s8:l1">vermanen</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Als wy zijn in veel <rhyme label="b" type="m" corresp="#s8:l2">noodts</rhyme>:</l>
        <l id="s8:l5" met="3" type="-+">Laet hem dan sien de <rhyme label="c" type="f">wonde</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Van't swaert uws eerste <rhyme label="d" type="m">Wee</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Op dat hy onse <rhyme label="c" type="f" corresp="#s8:l5">sonden</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Wt doet, en geeft ons <rhyme label="d" type="m" corresp="#s8:l6">vree'</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

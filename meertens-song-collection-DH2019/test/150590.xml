    <melody>Psalm 112 Datheen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">GEluckigh machmen hem wel <rhyme label="a" type="f">noemen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Geluckigh magh hy sich wel <rhyme label="a" type="f" corresp="#s1:l1">roemen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Die aen den grooten Godt der <rhyme label="b" type="f">Goden</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Sijn hert, met diep ontsach <rhyme label="c" type="f">doordroncken</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Vrijwilligh heeft ten dienst <rhyme label="c" type="f" corresp="#s1:l4">geschoncken</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">En hoogh vervroodt in sijn <rhyme label="b" type="f" corresp="#s1:l3">geboden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">In macht sal sijn geslacht <rhyme label="a" type="f">aen-groeyen</rhyme>;</l>
        <l id="s2:l2" met="4" type="-+">In eer sal’t wijdt en veer staen <rhyme label="a" type="f" corresp="#s2:l1">bloeyen</rhyme>;</l>
        <l id="s2:l3" met="4" type="-+">Een zee van heyl sal haer <rhyme label="b" type="f">toe-stroomen</rhyme>.</l>
        <l id="s2:l4" met="4" type="-+">O troost der Godtlijcker <rhyme label="c" type="f">gewissen</rhyme>!</l>
        <l id="s2:l5" met="4" type="-+">Het was oyt soo, en ’tkan niet <rhyme label="c" type="f" corresp="#s2:l4">missen</rhyme>:</l>
        <l id="s2:l6" met="4" type="-+">Godts zegen erft op’t zaedt der <rhyme label="b" type="f" corresp="#s2:l3">vromen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Haer saken gaen doorgaens <rhyme label="a" type="f">voorspoedigh</rhyme>;</l>
        <l id="s3:l2" met="4" type="-+">Haer huys heeft alles <rhyme label="a" type="f" corresp="#s3:l1">overvloedigh</rhyme>;</l>
        <l id="s3:l3" met="4" type="-+">De faem van haer gerechte <rhyme label="b" type="f">daden</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Door menschen nijt noch spijt <rhyme label="c" type="f">verschoven</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Noch in vergetings nacht <rhyme label="c" type="f" corresp="#s3:l4">bedoven</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Blinckt op onsterffelijcke <rhyme label="b" type="f" corresp="#s3:l3">bladen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Als’t avonthuer met <rhyme label="a" type="f">ongevallen</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Den boosen plots op’t lijf komt <rhyme label="a" type="f" corresp="#s4:l1">vallen</rhyme></l>
        <l id="s4:l3" met="4" type="-+">En overstolpt met allen <rhyme label="b" type="f">evel</rhyme>:</l>
        <l id="s4:l4" met="4" type="-+">Dan laet de Heer sijn liefde <rhyme label="c" type="f">stralen</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Troost-barigh op de vrome <rhyme label="c" type="f" corresp="#s4:l4">dalen</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">En strijckt van’t hert des droeffheyts <rhyme label="b" type="f" corresp="#s4:l3">nevel</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Sulck heyl komt Godt den sijnen <rhyme label="a" type="f">schaffen</rhyme>.</l>
        <l id="s5:l2" met="4" type="-+">Niet vreemdts. in loonen en in <rhyme label="a" type="f" corresp="#s5:l1">straffen</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Bewijst hy doorgaens sich <rhyme label="b" type="f">rechtvaerdigh</rhyme>;</l>
        <l id="s5:l4" met="4" type="-+">In hulp te schicken rad en <rhyme label="c" type="f">spoedigh</rhyme>;</l>
        <l id="s5:l5" met="4" type="-+">In troost te geven, mildt en <rhyme label="c" type="f" corresp="#s5:l4">goedigh</rhyme>;</l>
        <l id="s5:l6" met="4" type="-+">In’t leeren trouw en <rhyme label="b" type="f" corresp="#s5:l3">medewaerdigh</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">O! saligh, die, vol <rhyme label="a" type="f">mededoogen</rhyme></l>
        <l id="s6:l2" met="4" type="-+">En tot in’t ingewandt <rhyme label="a" type="f" corresp="#s6:l1">bewogen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Blij-moedigh leent waer noodt magh <rhyme label="b" type="f">spreken</rhyme>:</l>
        <l id="s6:l4" met="4" type="-+">Die koel en wijs-bedacht in <rhyme label="c" type="f">reden</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Recht-uyt, en ongeveynst van <rhyme label="c" type="f" corresp="#s6:l4">zeden</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Noyt deel en heeft aen slimme <rhyme label="b" type="f" corresp="#s6:l3">streken</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Geen ding soo sterck, off ’tkan <rhyme label="a" type="f">verkrancken</rhyme>;</l>
        <l id="s7:l2" met="4" type="-+">Geen ding soo vast, off ’tkan licht <rhyme label="a" type="f" corresp="#s7:l1">wancken</rhyme>;</l>
        <l id="s7:l3" met="4" type="-+">Geen ding soo waerdt, off ’t moet <rhyme label="b" type="f">verderven</rhyme>:</l>
        <l id="s7:l4" met="4" type="-+">Maer hy sal duren en <rhyme label="c" type="f">beklijven</rhyme>;</l>
        <l id="s7:l5" met="4" type="-+">Sijns naems gerucht in waerde <rhyme label="c" type="f" corresp="#s7:l4">blijven</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Als alles vlucht en wech moet <rhyme label="b" type="f" corresp="#s7:l3">sterven</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Daer mogen droeve maren <rhyme label="a" type="f">loopen</rhyme>;</l>
        <l id="s8:l2" met="4" type="-+">Daer magh een deure schijnen <rhyme label="a" type="f" corresp="#s8:l1">open</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Tot jammer-daedt en dichte <rhyme label="b" type="f">plagen</rhyme>;</l>
        <l id="s8:l4" met="4" type="-+">Den Hemel magh verschricklijck <rhyme label="c" type="f">dreygen</rhyme>;</l>
        <l id="s8:l5" met="4" type="-+">’tMagh all’ ten laetsten valle <rhyme label="c" type="f" corresp="#s8:l4">neygen</rhyme>:</l>
        <l id="s8:l6" met="4" type="-+">In alles sal hy niet <rhyme label="b" type="f" corresp="#s8:l3">vertsagen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Sijn hert om-muert met sterck <rhyme label="a" type="f">vertrouwen</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Kan alle vreese buyten <rhyme label="a" type="f" corresp="#s9:l1">houwen</rhyme>.</l>
        <l id="s9:l3" met="4" type="-+">Hy staet gelijck de vaste <rhyme label="b" type="f">rotsen</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Die in het midden van de <rhyme label="c" type="f">vloeden</rhyme></l>
        <l id="s9:l5" met="4" type="-+">Des wilden woesten zees, haer <rhyme label="c" type="f" corresp="#s9:l4">woeden</rhyme></l>
        <l id="s9:l6" met="4" type="-+">En krachteloose baren <rhyme label="b" type="f" corresp="#s9:l3">trotsen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Een reyn en knageloos <rhyme label="a" type="f">Geweten</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Magh tegen alle harde <rhyme label="a" type="f" corresp="#s10:l1">smeten</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Magh tegen duysendt duysendt <rhyme label="b" type="f">rampen</rhyme>.</l>
        <l id="s10:l4" met="4" type="-+">Een hert in Godt gestijft van <rhyme label="c" type="f">binnen</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Wat kan daer ’tbros Geval op <rhyme label="c" type="f" corresp="#s10:l4">winnen</rhyme>?</l>
        <l id="s10:l6" met="4" type="-+">Sijn pijl moet stomp te rugge <rhyme label="b" type="f" corresp="#s10:l3">schampen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Hy leeft getroost, en houdt het <rhyme label="a" type="f">staende</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Tot hy sijn vyandt (die sich <rhyme label="a" type="f" corresp="#s11:l1">waende</rhyme></l>
        <l id="s11:l3" met="4" type="-+">Sijns ondergangs te sullen <rhyme label="b" type="f">spotten</rhyme>)</l>
        <l id="s11:l4" met="4" type="-+">Met lust ter neder siet <rhyme label="c" type="f">geworpen</rhyme></l>
        <l id="s11:l5" met="4" type="-+">In onheyls grondeloose <rhyme label="c" type="f" corresp="#s11:l4">slorpen</rhyme></l>
        <l id="s11:l6" met="4" type="-+">En ziel-verderff, het loon der <rhyme label="b" type="f" corresp="#s11:l3">sotten</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Aen ’tGoedt en laet hy ’thert niet <rhyme label="a" type="f">kleven</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Maer heeft een ruyme handt in’t <rhyme label="a" type="f" corresp="#s12:l1">geven</rhyme>.</l>
        <l id="s12:l3" met="4" type="-+">Den armen deylt en stroyt hy <rhyme label="b" type="f">’tsijne</rhyme>.</l>
        <l id="s12:l4" met="4" type="-+">Wat is sijn loon? Dat (seyt Godts <rhyme label="c" type="f">Reden</rhyme>)</l>
        <l id="s12:l5" met="4" type="-+">De loff van sijn <rhyme label="c" type="f" corresp="#s12:l4">gerechticheden</rhyme></l>
        <l id="s12:l6" met="4" type="-+">In eeuwicheydt niet sal <rhyme label="b" type="f" corresp="#s12:l3">verdwijnen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Sijn eere leeft in sijnen <rhyme label="a" type="f">volcke</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">En heft haer hoofdt tot aen de <rhyme label="a" type="f" corresp="#s13:l1">wolcken</rhyme>;</l>
        <l id="s13:l3" met="4" type="-+">Geen oudtheydts roest kan haer <rhyme label="b" type="f">beknagen</rhyme>;</l>
        <l id="s13:l4" met="4" type="-+">Geen tijdt, waer doorse wordt <rhyme label="c" type="f">versleten</rhyme>;</l>
        <l id="s13:l5" met="4" type="-+">Geen nijdt, waer vanse wordt <rhyme label="c" type="f" corresp="#s13:l4">verbeten</rhyme></l>
        <l id="s13:l6" met="4" type="-+">Off in’t vergetel-graff <rhyme label="b" type="f" corresp="#s13:l3">gedragen</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">De Goddeloose sal’t <rhyme label="a" type="f">aenschouwen</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">En ’tsal sijn haetsche ziel <rhyme label="a" type="f" corresp="#s14:l1">benouwen</rhyme>:</l>
        <l id="s14:l3" met="4" type="-+">Verwondering ontstelt sijn <rhyme label="b" type="f">herssen</rhyme>;</l>
        <l id="s14:l4" met="4" type="-+">Verbitt’ring koomt uyt ’thert <rhyme label="c" type="f">op-dringen</rhyme>;</l>
        <l id="s14:l5" met="4" type="-+">Verwaende spijt, inwendigh <rhyme label="c" type="f" corresp="#s14:l4">wringen</rhyme>,</l>
        <l id="s14:l6" met="4" type="-+">En doet de tanden <rhyme label="b" type="f" corresp="#s14:l3">t’samen-knerssen</rhyme>:</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Sijn hert, van droeven nijdt <rhyme label="a" type="f">beseten</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">Wordt van hem selven <rhyme label="a" type="f" corresp="#s15:l1">opgevreten</rhyme>.</l>
        <l id="s15:l3" met="4" type="-+">Vergeefs: Want Godt maeckt dat al <rhyme label="b" type="f">’tpoogen</rhyme>,</l>
        <l id="s15:l4" met="4" type="-+">Dat al ’tgevloeck en qualijck <rhyme label="c" type="f">wenschen</rhyme></l>
        <l id="s15:l5" met="4" type="-+">Van alle Godt-vergeten <rhyme label="c" type="f" corresp="#s15:l4">menschen</rhyme>,</l>
        <l id="s15:l6" met="4" type="-+">Niets op den sijnen sal <rhyme label="b" type="f" corresp="#s15:l3">vermogen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

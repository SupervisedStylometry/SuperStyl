    <melody>Dies sind die heiligen zehn Gebote</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">CHristus ghinck met zijn Jongheren <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Op eenen berch met rasschen <rhyme label="a" type="m" corresp="#s1:l1">spoet</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">En leerde daer met zijnen <rhyme label="b" type="m">mont</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Des salicheyts vasten <rhyme label="b" type="m" corresp="#s1:l3">gront</rhyme>.</l>
        <l id="s1:l5" met="2" type="-+"><rhyme label="c" type="m">Kirieleys</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Salich zijn dArme van Gheeste <rhyme label="a" type="m">hier</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Want Godt ontfermet harer <rhyme label="a" type="m" corresp="#s2:l1">schier</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Om dat sy ootmoedich gaen <rhyme label="b" type="m">ghelijck</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Daerom toehoort hem Godes <rhyme label="b" type="m" corresp="#s2:l3">rijck</rhyme>.</l>
        <l id="s2:l5" met="2" type="-+"><rhyme label="c" type="m">Kirieleys</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Salich syn die saechtmoedich <rhyme label="a" type="m">zijn</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Liefde sal hun voorspoedich <rhyme label="a" type="m" corresp="#s3:l1">zijn</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Omdat sy handelen met <rhyme label="b" type="m">ootmoet</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Besitten sy Teerdtsche <rhyme label="b" type="m" corresp="#s3:l3">goet</rhyme>.</l>
        <l id="s3:l5" met="2" type="-+"><rhyme label="c" type="m">Kirieleys</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Die truerich schreyen, sonder <rhyme label="a" type="m">recht</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Christus den Heere salich <rhyme label="a" type="m" corresp="#s4:l1">secht</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En sullen ghetroost zijn en <rhyme label="b" type="m">ghespaert</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Als tswerelts vruecht droefheyt <rhyme label="b" type="m" corresp="#s4:l3">gaert</rhyme>.</l>
        <l id="s4:l5" met="2" type="-+"><rhyme label="c" type="m">Kirieleis</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Salich zijn die hun gheuen <rhyme label="a" type="m">snel</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Om recht en vroom te leuen <rhyme label="a" type="m" corresp="#s5:l1">wel</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Diens hongher en dorst rechtuaerdich <rhyme label="b" type="m">staet</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Daerom sullen sy zijn <rhyme label="b" type="m" corresp="#s5:l3">versaet</rhyme>.</l>
        <l id="s5:l5" met="2" type="-+"><rhyme label="c" type="m">Kirieleys</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Salich zijn die met ontfermen <rhyme label="a" type="m">groot</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Haren naesten helpen, in den <rhyme label="a" type="m" corresp="#s6:l1">noot</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Sy sullen ghenade behalen <rhyme label="b" type="m">hier</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Want Godt salt al betalen <rhyme label="b" type="m" corresp="#s6:l3">fier</rhyme>.</l>
        <l id="s6:l5" met="2" type="-+"><rhyme label="c" type="m">Kierieleys</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Wel hem die zijn van herten <rhyme label="a" type="m">reyn</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Niet soeckende dan Godts woort <rhyme label="a" type="m" corresp="#s7:l1">alleyn</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Sonder bedroch en valschen <rhyme label="b" type="m">gront</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Die sullen Godt sien <rhyme label="b" type="m" corresp="#s7:l3">terstont</rhyme>.</l>
        <l id="s7:l5" met="2" type="-+"><rhyme label="c" type="m">Kirieleys</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Salich sal zijn met groot <rhyme label="a" type="m">voorspoet</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Die vreede soeckt en arbeyt <rhyme label="a" type="m" corresp="#s8:l1">doet</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Dat twistich ghekijf tot vreden <rhyme label="b" type="m">coemt</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Die sal Godts kint zijn <rhyme label="b" type="m" corresp="#s8:l3">ghenoemt</rhyme>.</l>
        <l id="s8:l5" met="2" type="-+"><rhyme label="c" type="m">Kirieleys</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Salich zijn die omt Ghelooue <rhyme label="a" type="m">recht</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Veruolginghe lijden, en worden <rhyme label="a" type="m" corresp="#s9:l1">belecht</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Sijt lustich en blijde op dat <rhyme label="b" type="m">termijn</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Uwen loon sal groot by God <rhyme label="b" type="m" corresp="#s9:l3">zijn</rhyme>.</l>
        <l id="s9:l5" met="2" type="-+"><rhyme label="c" type="m">Kirieleys</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Dit zijn die deelen der <rhyme label="a" type="m">salichyt</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Om te leuen in <rhyme label="a" type="m" corresp="#s10:l1">ghehoorsaemheyt</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">So Christus leeringhe <rhyme label="b" type="m">bewijst</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Op datmen Godt loeft en <rhyme label="b" type="m" corresp="#s10:l3">prijst</rhyme>.</l>
        <l id="s10:l5" met="2" type="-+"><rhyme label="c" type="m">Kirieleys</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Die sondighe wereldt is seer <rhyme label="a" type="m">onuroet</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Die Salicheyt soeckt in gelt en <rhyme label="a" type="m" corresp="#s11:l1">goet</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Niet denckende dat vergaet <rhyme label="b" type="m">subijt</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Sonder ghewin oft <rhyme label="b" type="m" corresp="#s11:l3">profijt</rhyme>.</l>
        <l id="s11:l5" met="2" type="-+"><rhyme label="c" type="m">Kirieleys</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

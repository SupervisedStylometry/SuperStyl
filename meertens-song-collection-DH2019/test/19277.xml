  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">HOe wordy aldus <rhyme label="a" type="f">moede</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Als v die Heere <rhyme label="b" type="m">proeft</rhyme>?</l>
        <l id="s1:l3" met="3" type="-+">Ghedoocht zijn hant int <rhyme label="a" type="f" corresp="#s1:l1">goede</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Sijn rijck is v <rhyme label="b" type="m" corresp="#s1:l2">beloeft</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Hy weet wat v <rhyme label="b" type="m" corresp="#s1:l2">behoeft</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Bringhet int <rhyme label="c" type="f">ghedincken</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Wat hy v goets wil <rhyme label="c" type="f" corresp="#s1:l6">schincken</rhyme></l>
        <l id="s1:l8" met="3" type="-+">De Heer si hooch <rhyme label="b" type="m" corresp="#s1:l2">ghelooft</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ghedinckt wie daer <rhyme label="a" type="f">beloefde</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Al gaedy cruepel en <rhyme label="b" type="m">manck</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Te troosten die <rhyme label="a" type="f" corresp="#s2:l1">bedroefde</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Daer is den rechten <rhyme label="b" type="m" corresp="#s2:l2">ganck</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Uan hem is minen <rhyme label="b" type="m" corresp="#s2:l2">sanck</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Wie daer is <rhyme label="c" type="f">beladen</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Die Heer wil hem <rhyme label="c" type="f" corresp="#s2:l6">beraden</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Dies heb hy lof en <rhyme label="b" type="m" corresp="#s2:l2">danck</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Aenhoort doch die <rhyme label="a" type="f">Propheten</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Tis claerder dan sonnen <rhyme label="b" type="m">schijn</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Hy en sal ons niet <rhyme label="a" type="f" corresp="#s3:l1">vergheten</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Hoe mocht dat sueter <rhyme label="b" type="m" corresp="#s3:l2">zijn</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Hy is die <rhyme label="b" type="m" corresp="#s3:l2">medecijn</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Uan allen <rhyme label="c" type="f">creatueren</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Dus segt tot allen <rhyme label="c" type="f" corresp="#s3:l6">vren</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Ghelooft moet hy <rhyme label="b" type="m" corresp="#s3:l2">zijn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Wtgaende wt den <rhyme label="a" type="f">hooghen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Soo heeft hy ons <rhyme label="b" type="m">besocht</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Liefde doet hem <rhyme label="a" type="f" corresp="#s4:l1">gedooghen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Dat hy ons soo dier <rhyme label="b" type="m" corresp="#s4:l2">cocht</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Uan hem staeter <rhyme label="b" type="m" corresp="#s4:l2">noch</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Dat hy door Christus <rhyme label="c" type="f">bede</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Ons wil gheuen <rhyme label="c" type="f" corresp="#s4:l6">vrede</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Dies si hem danck en <rhyme label="b" type="m" corresp="#s4:l2">lof</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">O Heere alder <rhyme label="a" type="f">Heeren</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Alle gheesten zijn v <rhyme label="b" type="m">condt</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Willet ons doch <rhyme label="a" type="f" corresp="#s5:l1">leeren</rhyme></l>
        <l id="s5:l4" met="3" type="-+">O Heere maeckt ons <rhyme label="b" type="m" corresp="#s5:l2">ghesont</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Gheeft ons den rechten <rhyme label="b" type="m" corresp="#s5:l2">gront</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Op dat wy v niet tot <rhyme label="c" type="f">smerten</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Uloecken metter <rhyme label="c" type="f" corresp="#s5:l6">herten</rhyme></l>
        <l id="s5:l8" met="3" type="-+">En louen metten <rhyme label="b" type="m" corresp="#s5:l2">mont</rhyme>.</l>
      </lg>
    </lg>
  </text>

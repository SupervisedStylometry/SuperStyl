  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">VOorwaer, voorwaer, segh ik u <rhyme label="a" type="m">lien</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Heer Jesus tot de Jooden <rhyme label="b" type="m">seydt</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Den Soon kan niet, of heeft <rhyme label="a" type="m" corresp="#s1:l1">gesien</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Dat sijnen Vader eerst <rhyme label="b" type="m" corresp="#s1:l2">beleydt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Want al het geen den Vader <rhyme label="a" type="m">doet</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Dat doet ook desgelijks sijn <rhyme label="b" type="m">Kindt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">En hy vertoont hem al sijn <rhyme label="a" type="m" corresp="#s2:l1">goet</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Om dat hy sijnen Soon <rhyme label="b" type="m" corresp="#s2:l2">bemindt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">En hy hem nogh meer toonen <rhyme label="a" type="m">sal</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Op dat gy-lie verwondert <rhyme label="b" type="m">raekt</rhyme>.</l>
        <l id="s3:l3" met="4" type="-+">Den Vader wekt de dooden <rhyme label="a" type="m" corresp="#s3:l1">al</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Alsoo den Soon ook leevend' <rhyme label="b" type="m" corresp="#s3:l2">maekt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Den Vader oordeelt niemant <rhyme label="a" type="m">niet</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Maer heeft daer meed' sijn Soon <rhyme label="b" type="m">vereert</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En daerom is 't dat hy <rhyme label="a" type="m" corresp="#s4:l1">gebiedt</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Dat men sijn Soon gelijk hem <rhyme label="b" type="m" corresp="#s4:l2">eert</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Soo wie geen eer den Soone <rhyme label="a" type="m">geeft</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Die eert dan ook niet sijnen <rhyme label="b" type="m">Vaêr</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Die welke hem gesonden <rhyme label="a" type="m" corresp="#s5:l1">heeft</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Ik segge u, voorwaer, <rhyme label="b" type="m" corresp="#s5:l2">voorwaer</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">WAnt al die geen die hoort mijn <rhyme label="a" type="m">stem</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">En looft die mijn gesonden <rhyme label="b" type="m">heeft</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Heeft 't eeuwigh leeven binnen <rhyme label="a" type="m" corresp="#s6:l1">hem</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Die komt ten oordeel niet; maer <rhyme label="b" type="m" corresp="#s6:l2">leeft</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">De uere komt, en is nu <rhyme label="a" type="m">al</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">De dooden sullen hooren 't <rhyme label="b" type="m">woordt</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Van Godes Soone, en die <rhyme label="a" type="m" corresp="#s7:l1">sal</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Het leeven hebben die het <rhyme label="b" type="m" corresp="#s7:l2">hoordt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Gelijk den Vader 't leeven <rhyme label="a" type="m">heeft</rhyme></l>
        <l id="s8:l2" met="4" type="-+">In hem: soo ook sijn Soone <rhyme label="b" type="m">goet</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Aen wie den Vader maghte <rhyme label="a" type="m" corresp="#s8:l1">geeft</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Dat hy als mensch het oordeel <rhyme label="b" type="m" corresp="#s8:l2">doet</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">En maekt ook hier geen wonder <rhyme label="a" type="m">af</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Daer sal nogh koomen eenen <rhyme label="b" type="m">tijt</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Dat, die doodt leggen in het <rhyme label="a" type="m" corresp="#s9:l1">graf</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Mijn stemme hooren met 'er <rhyme label="b" type="m" corresp="#s9:l2">vlijt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Al die gedaen sal hebben <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Die sal tot 't eeuwigh leeven <rhyme label="b" type="m">gaen</rhyme>;</l>
        <l id="s10:l3" met="4" type="-+">Maer die heeft quaet gedaen, die <rhyme label="a" type="m" corresp="#s10:l1">moet</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Dan voor het strenge oordeel <rhyme label="b" type="m" corresp="#s10:l2">staen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Ik uyt mijn selven niet en <rhyme label="a" type="m">kan</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Gelijk ik hoor, ik oordeel <rhyme label="b" type="m">geef</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Mijn oordeel is rechtveerdigh <rhyme label="a" type="m" corresp="#s11:l1">dan</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Want ik niet na mijn wille <rhyme label="b" type="m" corresp="#s11:l2">leef</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Maer na de wille van mijn <rhyme label="a" type="m">Vaêr</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Die mijn gesonden heeft, ik <rhyme label="b" type="m">leef</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Mijn tuyghenis en is niet <rhyme label="a" type="m" corresp="#s12:l1">waer</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Soo ik die uyt mijn selven <rhyme label="b" type="m" corresp="#s12:l2">geef</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Een ander is getuyge <rhyme label="a" type="m">dan</rhyme></l>
        <l id="s13:l2" met="4" type="-+">Van mijn, wiens waerheyt ik wel <rhyme label="b" type="m">weet</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Gy hebt gesonden tot <rhyme label="a" type="m" corresp="#s13:l1">Iohan</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Die tuyghenis des waerheydts <rhyme label="b" type="m" corresp="#s13:l2">deet</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Ik neeme geen getuygh voor <rhyme label="a" type="m">mijn</rhyme></l>
        <l id="s14:l2" met="4" type="-+">Van menschen, want ik niet <rhyme label="b" type="m">begeer</rhyme>;</l>
        <l id="s14:l3" met="4" type="-+">Maer op dat gy moght saligh <rhyme label="a" type="m" corresp="#s14:l1">sijn</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">Daerom is 't dat ik u dit <rhyme label="b" type="m" corresp="#s14:l2">leer</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Joannes was een brandend <rhyme label="a" type="m">light</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">G' hebt luttel tijts verheught daer <rhyme label="b" type="m">by</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">Mijn tuyge is meer van <rhyme label="a" type="m" corresp="#s15:l1">gewight</rhyme>,</l>
        <l id="s15:l4" met="4" type="-+">Ik grooter tuyge heb dan <rhyme label="b" type="m" corresp="#s15:l2">hy</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">De werken die mijn Vaêr mijn <rhyme label="a" type="m">geeft</rhyme></l>
        <l id="s16:l2" met="4" type="-+">Te doen, die mijn getuygen <rhyme label="b" type="m">sijn</rhyme>,</l>
        <l id="s16:l3" met="4" type="-+">Als dat hy mijn gesonden <rhyme label="a" type="m" corresp="#s16:l1">heeft</rhyme>,</l>
        <l id="s16:l4" met="4" type="-+">En hy getuyght ook selfs van <rhyme label="b" type="m" corresp="#s16:l2">mijn</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">En gy hebt niet gehoort sijn <rhyme label="a" type="m">stem</rhyme>,</l>
        <l id="s17:l2" met="4" type="-+">Nogh aenschouwt sijn <rhyme label="b" type="m">gedaentenis</rhyme>,</l>
        <l id="s17:l3" met="4" type="-+">Want gy heel niet gelooft in <rhyme label="a" type="m" corresp="#s17:l1">hem</rhyme>,</l>
        <l id="s17:l4" met="4" type="-+">De welk van hem gesonden <rhyme label="b" type="m" corresp="#s17:l2">is</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Doorsoekt dan de Schrifture <rhyme label="a" type="m">vry</rhyme>,</l>
        <l id="s18:l2" met="4" type="-+">Want gy daer 't leeven in <rhyme label="b" type="m">beroemt</rhyme>,</l>
        <l id="s18:l3" met="4" type="-+">Die geeft getuygenis van <rhyme label="a" type="m" corresp="#s18:l1">my</rhyme>;</l>
        <l id="s18:l4" met="4" type="-+">Maer eeven gy niet tot mijn <rhyme label="b" type="m" corresp="#s18:l2">koemt</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">'k Soek van de menschen geene <rhyme label="a" type="m">faem</rhyme>,</l>
        <l id="s19:l2" met="4" type="-+">Maer gy sonder Goodts liefde <rhyme label="b" type="m">bent</rhyme>,</l>
        <l id="s19:l3" met="4" type="-+">Ik kom in mijne Vaders <rhyme label="a" type="m" corresp="#s19:l1">naem</rhyme>,</l>
        <l id="s19:l4" met="4" type="-+">Maer gy mijn niet ontfanght, nogh <rhyme label="b" type="m" corresp="#s19:l2">kent</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">Een ander in sijn eygen <rhyme label="a" type="m">naem</rhyme></l>
        <l id="s20:l2" met="4" type="-+">Sal koomen, die gy sult <rhyme label="b" type="m">ontfaen</rhyme>;</l>
        <l id="s20:l3" met="4" type="-+">Want gy elkander eert te <rhyme label="a" type="m" corresp="#s20:l1">saem</rhyme>,</l>
        <l id="s20:l4" met="4" type="-+">Kondt gy 't geloof niet neemen <rhyme label="b" type="m" corresp="#s20:l2">aen</rhyme>.</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="4" type="-+">Denkt niet dat ik u by den <rhyme label="a" type="m">Vaêr</rhyme></l>
        <l id="s21:l2" met="4" type="-+">Beklagen sal: maer den <rhyme label="b" type="m">Propheet</rhyme>,</l>
        <l id="s21:l3" met="4" type="-+">Die goede Moyses selfs, <rhyme label="a" type="m" corresp="#s21:l1">voorwaer</rhyme>,</l>
        <l id="s21:l4" met="4" type="-+">Sal klagen daer gy op <rhyme label="b" type="m" corresp="#s21:l2">vermeet</rhyme>.</l>
      </lg>
      <lg id="s22" type="stanza">
        <l id="s22:l1" met="4" type="-+">Soo gy Moyses gelooven <rhyme label="a" type="m">woudt</rhyme>,</l>
        <l id="s22:l2" met="4" type="-+">Want hy van mijn geschreeven <rhyme label="b" type="m">heeft</rhyme>,</l>
        <l id="s22:l3" met="4" type="-+">G' ook mijn misschien gelooven <rhyme label="a" type="m" corresp="#s22:l1">soudt</rhyme>,</l>
        <l id="s22:l4" met="4" type="-+">Dogh gy mijn geen geloove <rhyme label="b" type="m" corresp="#s22:l2">geeft</rhyme>.</l>
      </lg>
      <lg id="s23" type="stanza">
        <l id="s23:l1" met="4" type="-+">Wy neemen vastelijken <rhyme label="a" type="m">an</rhyme>,</l>
        <l id="s23:l2" met="4" type="-+">Dat gy van Godt gesonden <rhyme label="b" type="m">sijt</rhyme>,</l>
        <l id="s23:l3" met="4" type="-+">Geeft ons het eeuwigh leeven <rhyme label="a" type="m" corresp="#s23:l1">dan</rhyme>,</l>
        <l id="s23:l4" met="4" type="-+">In 't uyterst oordeel ons <rhyme label="b" type="m" corresp="#s23:l2">bevrijt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

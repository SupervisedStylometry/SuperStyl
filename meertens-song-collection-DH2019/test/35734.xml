    <melody>Des morgens voor dag in het veld al bij de weg</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">MIjn Godt, mijn <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Ghy roept: tot my wilt <rhyme label="b" type="f">komen</rhyme>;</l>
        <l id="s1:l3" met="2" type="-+">'t Is mijn <rhyme label="a" type="m" corresp="#s1:l1">begeer</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Wilt vreese, veel min <rhyme label="b" type="f" corresp="#s1:l2">schroomen</rhyme>:</l>
        <l id="s1:l5" met="2" type="-+">Om Adams <rhyme label="c" type="m">beedt</rhyme></l>
        <l id="s1:l6" met="2" type="-+">'k Ben quaedt noch <rhyme label="c" type="m" corresp="#s1:l5">wreedt</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">'k Ben quaet, 'k ben quaedt, 'k ben quaet noch <rhyme label="c" type="m" corresp="#s1:l5">wreedt</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">Neemt en mijn lichaem <rhyme label="c" type="m" corresp="#s1:l5">eet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Heer! ick <rhyme label="a" type="m">beken</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Dat ick u Mensch, Godt, <rhyme label="b" type="f">Koningh</rhyme></l>
        <l id="s2:l3" met="2" type="-+">Onwaerdigh <rhyme label="a" type="m" corresp="#s2:l1">ben</rhyme></l>
        <l id="s2:l4" met="3" type="-+">T' Ontfange in mijn <rhyme label="b" type="f" corresp="#s2:l2">wooningh</rhyme>,</l>
        <l id="s2:l5" met="2" type="-+">Soo ick <rhyme label="c" type="m">verstoot</rhyme></l>
        <l id="s2:l6" met="2" type="-+">U 's Hemels <rhyme label="c" type="m" corresp="#s2:l5">broodt</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">U 'she, u 'she' u 'shemels <rhyme label="c" type="m" corresp="#s2:l5">Broodt</rhyme></l>
        <l id="s2:l8" met="4" type="-+">Mijn Ziel bijft naeckt en <rhyme label="c" type="m" corresp="#s2:l5">bloot</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Maeckt mijn <rhyme label="a" type="m">bereyt</rhyme>.</l>
        <l id="s3:l2" met="3" type="-+">Komt gast, spijs, Godt met <rhyme label="b" type="f">vrede</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">En <rhyme label="a" type="m" corresp="#s3:l1">zaligheyt</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Als tot Zach√©us, <rhyme label="b" type="f" corresp="#s3:l2">heden</rhyme>.</l>
        <l id="s3:l5" met="2" type="-+">Van 't minst tot ' <rhyme label="c" type="m">meest</rhyme></l>
        <l id="s3:l6" met="2" type="-+">Mijn ziel <rhyme label="c" type="m" corresp="#s3:l5">geneest</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Mijn ziel, mijn ziel, mijn ziel <rhyme label="c" type="m" corresp="#s3:l5">geneest</rhyme>;</l>
        <l id="s3:l8" met="4" type="-+">Verlicht, versaet mijn <rhyme label="c" type="m" corresp="#s3:l5">geest</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Mijn hart dat <rhyme label="a" type="m">brandt</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Dat ghy mijn maeckt <rhyme label="b" type="f">deelachtigh</rhyme></l>
        <l id="s4:l3" met="2" type="-+">U waerdste <rhyme label="a" type="m" corresp="#s4:l1">pant</rhyme>:</l>
        <l id="s4:l4" met="3" type="-+">U vleesch en bloedt <rhyme label="b" type="f" corresp="#s4:l2">waerachtigh</rhyme></l>
        <l id="s4:l5" met="2" type="-+">Geen Moeder <rhyme label="c" type="m">voet</rhyme></l>
        <l id="s4:l6" met="2" type="-+">Met vleysch en <rhyme label="c" type="m" corresp="#s4:l5">bloet</rhyme></l>
        <l id="s4:l7" met="4" type="-+">Met vleysch, met vleysch, met vleysch en <rhyme label="c" type="m" corresp="#s4:l5">bloet</rhyme></l>
        <l id="s4:l8" met="4" type="-+">Haer Kindt, als ghy my <rhyme label="c" type="m" corresp="#s4:l5">doet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Geen <rhyme label="a" type="m">Zeraphin</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Noch Engelen <rhyme label="b" type="f">verheven</rhyme>,</l>
        <l id="s5:l3" met="2" type="-+">Noch <rhyme label="a" type="m" corresp="#s5:l1">Cherubin</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Dit banquet wordt <rhyme label="b" type="f" corresp="#s5:l2">gegeven</rhyme>.</l>
        <l id="s5:l5" met="2" type="-+">Mijn Godt, mijn <rhyme label="c" type="m">lief</rhyme>,</l>
        <l id="s5:l6" met="2" type="-+">Tot mijn <rhyme label="c" type="m" corresp="#s5:l5">gerief</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Tot mijn, tot mijn, tot mijn <rhyme label="c" type="m" corresp="#s5:l5">gerief</rhyme></l>
        <l id="s5:l8" met="4" type="-+">Geeft ghy de'es <rhyme label="c" type="m" corresp="#s5:l5">Minne-brief</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Dat ghy uyt 't <rhyme label="a" type="m">hof</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Des Hemels komt ne'er <rhyme label="b" type="f">dalen</rhyme></l>
        <l id="s6:l3" met="2" type="-+">Tot mijn: de'es <rhyme label="a" type="m" corresp="#s6:l1">lof</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">De'es eer, 'k kan noyt <rhyme label="b" type="f" corresp="#s6:l2">betalen</rhyme>.</l>
        <l id="s6:l5" met="2" type="-+">Hierom mijn <rhyme label="c" type="m">le'en</rhyme></l>
        <l id="s6:l6" met="2" type="-+">En ziel <rhyme label="c" type="m" corresp="#s6:l5">alleen</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">En ziel, en ziel, en ziel <rhyme label="c" type="m" corresp="#s6:l5">alleen</rhyme></l>
        <l id="s6:l8" met="4" type="-+">'k Schenck u, en anders <rhyme label="c" type="m" corresp="#s6:l5">geen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="2" type="-+">U liefde <rhyme label="a" type="m">vlam</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Wilt in mijn hart <rhyme label="b" type="f">ontsteecken</rhyme>.</l>
        <l id="s7:l3" met="2" type="-+">O Godes <rhyme label="a" type="m" corresp="#s7:l1">Lam</rhyme>!</l>
        <l id="s7:l4" met="3" type="-+">Neemt wegh al mijn <rhyme label="b" type="f" corresp="#s7:l2">gebreecken</rhyme>,</l>
        <l id="s7:l5" met="2" type="-+">Met 's werelts <rhyme label="c" type="m">spel</rhyme>,</l>
        <l id="s7:l6" met="2" type="-+">En vleysch <rhyme label="c" type="m" corresp="#s7:l5">rebel</rhyme>,</l>
        <l id="s7:l7" met="4" type="-+">En vleysch, en vleysch, en vleysch <rhyme label="c" type="m" corresp="#s7:l5">rebel</rhyme>,</l>
        <l id="s7:l8" met="4" type="-+">En al 't gespuys der <rhyme label="c" type="m" corresp="#s7:l5">hel</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="2" type="-+">Laet my als <rhyme label="a" type="m">Ruth</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Al uw' verdiensten <rhyme label="b" type="f">aren</rhyme>,</l>
        <l id="s8:l3" met="2" type="-+">En gaven <rhyme label="a" type="m" corresp="#s8:l1">nut</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Des Heyligh Geest <rhyme label="b" type="f" corresp="#s8:l2">vergaren</rhyme>:</l>
        <l id="s8:l5" met="2" type="-+">Mijn ziel maeckt <rhyme label="c" type="m">rijck</rhyme>,</l>
        <l id="s8:l6" met="2" type="-+">En <rhyme label="c" type="m" corresp="#s8:l5">Goddelijck</rhyme>,</l>
        <l id="s8:l7" met="4" type="-+">En God, en God, en <rhyme label="c" type="m" corresp="#s8:l5">Goddelijck</rhyme>.</l>
        <l id="s8:l8" met="4" type="-+">Geeft dat ick noyt <rhyme label="c" type="m" corresp="#s8:l5">beswijck</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="2" type="-+">Mijn <rhyme label="a" type="m">Bruydegom</rhyme>!</l>
        <l id="s9:l2" met="3" type="-+">Laet my u zoetheyt <rhyme label="b" type="f">smaecken</rhyme>.</l>
        <l id="s9:l3" met="2" type="-+">Een <rhyme label="a" type="m" corresp="#s9:l1">Zonne-blom</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Van mijnen wil wilt <rhyme label="b" type="f" corresp="#s9:l2">maecken</rhyme>.</l>
        <l id="s9:l5" met="2" type="-+">Geeft dat niet <rhyme label="c" type="m">scheyt</rhyme>,</l>
        <l id="s9:l6" met="2" type="-+">Noch mijn <rhyme label="c" type="m" corresp="#s9:l5">verleyt</rhyme>,</l>
        <l id="s9:l7" met="4" type="-+">Noch mijn, noch mijn, noch mijn <rhyme label="c" type="m" corresp="#s9:l5">verleyt</rhyme>.</l>
        <l id="s9:l8" met="4" type="-+">Van u in <rhyme label="c" type="m" corresp="#s9:l5">d'eeuwigheyt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="2" type="-+">O goedtheydt <rhyme label="a" type="m">Goods</rhyme>!</l>
        <l id="s10:l2" met="3" type="-+">Mijn schilt, mijn hoop, mijn <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s10:l3" met="2" type="-+">In d'uur des <rhyme label="a" type="m" corresp="#s10:l1">doots</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Voor teer-gelt wilt my <rhyme label="b" type="f" corresp="#s10:l2">geven</rhyme>:</l>
        <l id="s10:l5" met="2" type="-+">U bloedt en <rhyme label="c" type="m">vleysch</rhyme>,</l>
        <l id="s10:l6" met="2" type="-+">In u <rhyme label="c" type="m" corresp="#s10:l5">paleys</rhyme></l>
        <l id="s10:l7" met="4" type="-+">In u, in u, in u <rhyme label="c" type="m" corresp="#s10:l5">paleys</rhyme></l>
        <l id="s10:l8" met="4" type="-+">Leyt my op dese <rhyme label="c" type="m" corresp="#s10:l5">reys</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

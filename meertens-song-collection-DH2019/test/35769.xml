      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">VAn Thecla wilt nu <rhyme label="a" type="f">leeren</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Wie dat ghy zijt o <rhyme label="b" type="m">Mensch</rhyme>?</l>
        <l id="s1:l3" met="3" type="-+">Met haer Godts woort te <rhyme label="a" type="f" corresp="#s1:l1">eeren</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Na Godes wil en <rhyme label="b" type="m" corresp="#s1:l2">wensch</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">'t Hooren sijn Dienaers <rhyme label="c" type="m">woort</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Acht meer als 't werelts <rhyme label="d" type="m">goet</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Sult d' Heer niet sien <rhyme label="c" type="m" corresp="#s1:l5">verstoort</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Soo ghy 't beleeft en <rhyme label="d" type="m" corresp="#s1:l6">doet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Van Thecla Maeght, leert <rhyme label="a" type="f">Maeghden</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Soo ghy u <rhyme label="b" type="m">Bruydegom</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Met haer oock wilt <rhyme label="a" type="f" corresp="#s2:l1">behaegen</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Na d' werelt siet niet <rhyme label="b" type="m" corresp="#s2:l2">om</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">V suyverheyt <rhyme label="c" type="m">behout</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Waeckt daerom seer en <rhyme label="d" type="m">strijdt</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Tot 's werelts spot niet <rhyme label="c" type="m" corresp="#s2:l5">trout</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">'t Werelts geselschap <rhyme label="d" type="m" corresp="#s2:l6">mijdt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Iesus u niet <rhyme label="a" type="f">verlaten</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Sal, in u strijt, of <rhyme label="b" type="m">pijn</rhyme>;</l>
        <l id="s3:l3" met="3" type="-+">En boven alle <rhyme label="a" type="f" corresp="#s3:l1">staeten</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Stelt uw', hoe schoon sy <rhyme label="b" type="m" corresp="#s3:l2">zijn</rhyme>;</l>
        <l id="s3:l5" met="3" type="-+">Met 't lam Godts sult ghy <rhyme label="c" type="m">gaen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Daer nae in 's Hemels <rhyme label="d" type="m">Throon</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Sijn glory sult <rhyme label="c" type="m" corresp="#s3:l5">ontfaen</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Soo ghy hout <rhyme label="d" type="m" corresp="#s3:l6">Maeghde-kroon</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Thecla, door uw <rhyme label="a" type="f">gebeden</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Verkrijght van Godes <rhyme label="b" type="m">Soon</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Dat de Maeght haer <rhyme label="a" type="f" corresp="#s4:l1">leden</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">En Ziel hout reyn, en <rhyme label="b" type="m" corresp="#s4:l2">schoon</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">Krijght haer en andre <rhyme label="c" type="m">mee</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Van onsen Heer en <rhyme label="d" type="m">Godt</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">'t Ontgaen d'eeuwige <rhyme label="c" type="m" corresp="#s4:l5">wee</rhyme>,</l>
        <l id="s4:l8" met="3" type="-+">Dat d' Hemel is ons <rhyme label="d" type="m" corresp="#s4:l6">lot</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">De Maeghden wilt <rhyme label="a" type="f">verleenen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Iesu, die alles <rhyme label="b" type="m">heeft</rhyme>:</l>
        <l id="s5:l3" met="3" type="-+">Dat yder sonder <rhyme label="a" type="f" corresp="#s5:l1">steenen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">In dese staet wel <rhyme label="b" type="m" corresp="#s5:l2">leeft</rhyme>;</l>
        <l id="s5:l5" met="3" type="-+">Dat niemant die raeckt <rhyme label="c" type="m">quijt</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">En gheeft haer met <rhyme label="d" type="m">Thecla</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Te winnen 't Vlees dat <rhyme label="c" type="m" corresp="#s5:l5">strijt</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">Heer segh: 't Versoeck aen <rhyme label="d" type="m" corresp="#s5:l6">sla</rhyme>.</l>
      </lg>
    </lg>
  </text>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="+-">Ag, hoe <rhyme label="a" type="m">soet</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">O schoonste der <rhyme label="b" type="f">godinnen</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">Streeld gy <rhyme label="b" type="f" corresp="#s1:l2">sinnen</rhyme></l>
        <l id="s1:l4" met="2" type="+-">Die <rhyme label="b" type="f" corresp="#s1:l2">beminnen</rhyme></l>
        <l id="s1:l5" met="2" type="+-">Met uw <rhyme label="a" type="m" corresp="#s1:l1">gloed</rhyme>!</l>
        <l id="s1:l6" met="2" type="+-">Ja, die <rhyme label="c" type="m">smaak</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Gaat alle vreugd te <rhyme label="d" type="f">boven</rhyme>;</l>
        <l id="s1:l8" met="2" type="+-">Die te <rhyme label="d" type="f" corresp="#s1:l7">doven</rhyme></l>
        <l id="s1:l9" met="2" type="+-">Is sig <rhyme label="d" type="f" corresp="#s1:l7">roven</rhyme></l>
        <l id="s1:l10" met="2" type="+-">'t Waar <rhyme label="c" type="m" corresp="#s1:l6">vermaak</rhyme>,</l>
        <l id="s1:l11" met="2" type="+-">Dat een <rhyme label="e" type="m">mensch</rhyme></l>
        <l id="s1:l12" met="3" type="-+">Opregte vreugd kan <rhyme label="f" type="f">geven</rhyme></l>
        <l id="s1:l13" met="2" type="+-">Daar al 't <rhyme label="f" type="f" corresp="#s1:l12">leven</rhyme></l>
        <l id="s1:l14" met="2" type="+-">Na moet <rhyme label="f" type="f" corresp="#s1:l12">streven</rhyme></l>
        <l id="s1:l15" met="2" type="+-">Met hun <rhyme label="e" type="m" corresp="#s1:l11">wensch</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="+-">Wel, ik <rhyme label="a" type="m">sal</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Uw wil gewillig <rhyme label="b" type="f">dragen</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Noit <rhyme label="b" type="f" corresp="#s2:l2">vertragen</rhyme></l>
        <l id="s2:l4" met="2" type="+-">Door de <rhyme label="b" type="f" corresp="#s2:l2">plagen</rhyme></l>
        <l id="s2:l5" met="2" type="+-">Van 't <rhyme label="a" type="m" corresp="#s2:l1">geval</rhyme>.</l>
        <l id="s2:l6" met="2" type="+-">Wild u <rhyme label="c" type="m">brand</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Slegts in ons hert <rhyme label="d" type="f">ontsteeken</rhyme>,</l>
        <l id="s2:l8" met="2" type="+-">Vorder <rhyme label="d" type="f" corresp="#s2:l7">kweken</rhyme></l>
        <l id="s2:l9" met="2" type="+-">En noit <rhyme label="d" type="f" corresp="#s2:l7">breken</rhyme></l>
        <l id="s2:l10" met="2" type="+-">Onse <rhyme label="c" type="m" corresp="#s2:l6">band</rhyme>:</l>
        <l id="s2:l11" met="2" type="+-">Dan sal <rhyme label="e" type="m">nyd</rhyme></l>
        <l id="s2:l12" met="3" type="-+">Nog ramp ons heil <rhyme label="f" type="f">besnoeijen</rhyme>,</l>
        <l id="s2:l13" met="2" type="+-">Maar steeds <rhyme label="f" type="f" corresp="#s2:l12">bloeijen</rhyme></l>
        <l id="s2:l14" met="2" type="+-">Ja, vol <rhyme label="f" type="f" corresp="#s2:l12">groeijen</rhyme></l>
        <l id="s2:l15" met="2" type="+-">Tot haar <rhyme label="e" type="m" corresp="#s2:l11">spijt</rhyme>.</l>
      </lg>
    </lg>

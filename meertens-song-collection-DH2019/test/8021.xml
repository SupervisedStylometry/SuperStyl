  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HEft op u hert, opent u <rhyme label="a" type="f">ooren</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Ghy hart volck end' traegh in 't <rhyme label="b" type="m">verstaen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Wilt uwes Godts stemmen nu <rhyme label="a" type="f" corresp="#s1:l1">hooren</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">End' zijn gheboden gade <rhyme label="b" type="m" corresp="#s1:l2">slaen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ick ben (seydt hy) u Godt end' <rhyme label="a" type="f">Heere</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Die u hebbe gemaeckt gantsch <rhyme label="b" type="m">vry</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Van 't jock, 'twelck u beswaerde <rhyme label="a" type="f" corresp="#s2:l1">seere</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Hebt gheen and'ren Godt neven <rhyme label="b" type="m" corresp="#s2:l2">my</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Laet u gheen beeld' maken noch <rhyme label="a" type="f">snijden</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Van eenigh dingh in 't Aertsche <rhyme label="b" type="m">dal</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Soo ghy die eert t'eenighen <rhyme label="a" type="f" corresp="#s3:l1">tijden</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Uwen Godt seer zeloers zijn <rhyme label="b" type="m" corresp="#s3:l2">sal</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ydelijck sijnen naem <rhyme label="a" type="f">ghepresen</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Sult ghy niet nemen in den <rhyme label="b" type="m">mondt</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Want hy sal niet onschuldich <rhyme label="a" type="f" corresp="#s4:l1">wesen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Die dien misbruyckt t'eenigher <rhyme label="b" type="m" corresp="#s4:l2">stondt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Arbeyt ses daghen end' met <rhyme label="a" type="f">lusten</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Viert den sevensten, Godts woordt <rhyme label="b" type="m">smaeckt</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Want Godt wild' op dien dach selfs <rhyme label="a" type="f" corresp="#s5:l1">rusten</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Van 't werck dat hy hadde <rhyme label="b" type="m" corresp="#s5:l2">ghemaeckt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Vader en Moeder sult ghy <rhyme label="a" type="f">eeren</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Op dat ghy langh in voorspoet <rhyme label="b" type="m">leeft</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">End' op Aerden seer meucht <rhyme label="a" type="f" corresp="#s6:l1">vermeeren</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Die u Godt tot een herbergh <rhyme label="b" type="m" corresp="#s6:l2">gheeft</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Dootslach en toorne sult ghy <rhyme label="a" type="f">mijden</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Al oncuysheyt vliet en <rhyme label="b" type="m">afbreeckt</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Steelt niet al most ghy ghebreck <rhyme label="a" type="f" corresp="#s7:l1">lijden</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Gheen valsch ghetuyghenisse <rhyme label="b" type="m" corresp="#s7:l2">spreeckt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Van begheren sult ghy u <rhyme label="a" type="f">wachten</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Des naesten huys en wijf nu <rhyme label="b" type="m">voort</rhyme>:</l>
        <l id="s8:l3" met="4" type="-+">Nae zijn knecht oft vee wilt niet <rhyme label="a" type="f" corresp="#s8:l1">trachten</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Noch nae al dat hem <rhyme label="b" type="m" corresp="#s8:l2">toebehoort</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">O Godt u woordt seer groot van <rhyme label="a" type="f">machten</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Luyt klaerder dan eenigh <rhyme label="b" type="m">metael</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Gheeft ons die genaed' ende <rhyme label="a" type="f" corresp="#s9:l1">krachten</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Om die te houden <rhyme label="b" type="m" corresp="#s9:l2">altemael</rhyme>.</l>
      </lg>
    </lg>
  </text>

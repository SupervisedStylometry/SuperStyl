  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">SIet Xaverius eens <rhyme label="a" type="f">branden</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Als hy in de vremde <rhyme label="a" type="f" corresp="#s1:l1">landen</rhyme></l>
        <l id="s1:l3" met="4" type="+-">By den swarten <rhyme label="b" type="m">Mooriaen</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Vierighlyck langhs alle <rhyme label="c" type="f">kanten</rhyme></l>
        <l id="s1:l5" met="4" type="+-">t'Heyligh Roomsch Geloof gaet <rhyme label="c" type="f" corresp="#s1:l4">planten</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">En verthoonen s'Hemels <rhyme label="b" type="m" corresp="#s1:l3">baen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Daer gaet hy de Zielen <rhyme label="a" type="f">jaegen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Die in vyandts netten <rhyme label="a" type="f" corresp="#s2:l1">laegen</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">In Af-godery <rhyme label="b" type="m">versmacht</rhyme>:</l>
        <l id="s2:l4" met="4" type="+-">Daer heeft hy die oock <rhyme label="c" type="f">gevonden</rhyme>,</l>
        <l id="s2:l5" met="4" type="+-">En getrocken uyt de <rhyme label="c" type="f" corresp="#s2:l4">sonden</rhyme></l>
        <l id="s2:l6" met="4" type="+-">Door de Goddelycke <rhyme label="b" type="m" corresp="#s2:l3">kracht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Syn Apostolycke <rhyme label="a" type="f">voeten</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Vliegen, om het al <rhyme label="a" type="f" corresp="#s3:l1">t'ontmoeten</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Door sneeuw, haegel, sandt, en <rhyme label="b" type="m">stof</rhyme>;</l>
        <l id="s3:l4" met="4" type="+-">Om te doopen, of te <rhyme label="c" type="f">preken</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Om een ieder te <rhyme label="c" type="f" corresp="#s3:l4">ontsteken</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Tot Godts meerder eer, en <rhyme label="b" type="m" corresp="#s3:l3">lof</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Al de kinders, die daer <rhyme label="a" type="f">waeren</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Gonck Xaverius <rhyme label="a" type="f" corresp="#s4:l1">vergaeren</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">En ontsteken in de <rhyme label="b" type="m">deught</rhyme>:</l>
        <l id="s4:l4" met="4" type="+-">Leert, door s'Hemels vier <rhyme label="c" type="f">gedreven</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Christi wet hun wel <rhyme label="c" type="f" corresp="#s4:l4">beleven</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Om te gaen in d'eeuwig' <rhyme label="b" type="m" corresp="#s4:l3">vreught</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">IndiÃ«n kost niet <rhyme label="a" type="f">bepaelen</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Al syn heete <rhyme label="a" type="f" corresp="#s5:l1">liefde-straelen</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Die daer schynden <rhyme label="b" type="m">over-al</rhyme>:</l>
        <l id="s5:l4" met="4" type="+-">Japon moest hy oock <rhyme label="c" type="f">door-loopen</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">Met bekeeren, en met <rhyme label="c" type="f" corresp="#s5:l4">doopen</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Menigh duysent in't <rhyme label="b" type="m" corresp="#s5:l3">getal</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Sina wenscht hy oock te <rhyme label="a" type="f">leeren</rhyme>;</l>
        <l id="s6:l2" met="4" type="+-">En die Zielen te <rhyme label="a" type="f" corresp="#s6:l1">bekeeren</rhyme>;</l>
        <l id="s6:l3" met="4" type="+-">Maer syn Kroon was al <rhyme label="b" type="m">bereydt</rhyme>:</l>
        <l id="s6:l4" met="4" type="+-">In het Hemels hof, hier <rhyme label="c" type="f">boven</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Moest hy synen Heer gaen <rhyme label="c" type="f" corresp="#s6:l4">loven</rhyme></l>
        <l id="s6:l6" met="4" type="+-">In gewenschte <rhyme label="b" type="m" corresp="#s6:l3">eeuwigheydt</rhyme>.</l>
      </lg>
    </lg>
  </text>

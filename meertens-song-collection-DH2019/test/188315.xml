  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">EEn poezel aardig <rhyme label="a" type="f">Meysje</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Gevoelden een vreemt <rhyme label="b" type="m">verdriet</rhyme>:</l>
        <l id="s1:l3" met="3" type="-+">Het kroop haar door het <rhyme label="a" type="f" corresp="#s1:l1">Vleysje</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">En 't Sloofje dat kon het <rhyme label="b" type="m" corresp="#s1:l2">niet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Zy ging zig half <rhyme label="a" type="f">ontkleeden</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En zogt, (als of zy 't <rhyme label="b" type="m">vond</rhyme>)</l>
        <l id="s2:l3" met="3" type="-+">Van boven tot <rhyme label="a" type="f" corresp="#s2:l1">beneden</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Om ziende in het <rhyme label="b" type="m" corresp="#s2:l2">rond</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Maar niets, dat kon haar <rhyme label="a" type="f">baten</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Waar dat zy voeld of <rhyme label="b" type="m">tast</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Het Jeukten als <rhyme label="a" type="f" corresp="#s3:l1">uytgelaten</rhyme>:</l>
        <l id="s3:l4" met="3" type="-+">Tot dat zy wierd <rhyme label="b" type="m" corresp="#s3:l2">verrast</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Daar kwam een Herder <rhyme label="a" type="f">Roeyen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Regt midden door de <rhyme label="b" type="m">Stroom</rhyme>;</l>
        <l id="s4:l3" met="3" type="-+">Die 't Bloempje af wou <rhyme label="a" type="f" corresp="#s4:l1">Snoeyen</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Van eene <rhyme label="b" type="m" corresp="#s4:l2">Rooseboom</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Hy kreeg haar in zyn <rhyme label="a" type="f">Oogen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">En zy keek na die <rhyme label="b" type="m">Kwant</rhyme>:</l>
        <l id="s5:l3" met="3" type="-+">Cupido kwam <rhyme label="a" type="f" corresp="#s5:l1">gevloogen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Stak Stroom en Land in <rhyme label="b" type="m" corresp="#s5:l2">brand</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Zy vlugten quasi <rhyme label="a" type="f">heenen</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Maar voelde meerder <rhyme label="b" type="m">Pyn</rhyme>:</l>
        <l id="s6:l3" met="3" type="-+">Hy volgt haar op de <rhyme label="a" type="f" corresp="#s6:l1">Teenen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">En gaf haar <rhyme label="b" type="m" corresp="#s6:l2">Medicyn</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Toen had haar Quaal een <rhyme label="a" type="f">Ende</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">En hy den Boom <rhyme label="b" type="m">gesnoeyt</rhyme>;</l>
        <l id="s7:l3" met="3" type="-+">Zy greep hem in de <rhyme label="a" type="f" corresp="#s7:l1">Lenden</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">En was wel braaf <rhyme label="b" type="m" corresp="#s7:l2">vermoeit</rhyme>.</l>
      </lg>
    </lg>
  </text>

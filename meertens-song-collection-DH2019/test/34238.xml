  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">SEght my, o soete <rhyme label="a" type="f">Herderinne</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Wat maeckt ghy hier in dees <rhyme label="b" type="m">valley</rhyme>?</l>
        <l id="s1:l3" met="4" type="-+">Verlaet al u Schaepkens <rhyme label="b" type="m" corresp="#s1:l2">vry</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">‘k Sal u maken een <rhyme label="a" type="f" corresp="#s1:l1">Gravinne</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">Liefste gunt my u liefde <rhyme label="c" type="m">geheel</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Ick sal u kleeden in ’t <rhyme label="c" type="m" corresp="#s1:l5">fluweel</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Monsieur ick danck u (wilt niet <rhyme label="a" type="f">stooren</rhyme>)</l>
        <l id="s2:l2" met="4" type="-+">Ghy toont my veel te groot <rhyme label="b" type="m">faveur</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">‘k Heb eenen and’ren <rhyme label="b" type="m" corresp="#s2:l2">serviteur</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Die my voor al heeft <rhyme label="a" type="f" corresp="#s2:l1">verkooren</rhyme>:</l>
        <l id="s2:l5" met="4" type="-+">V Coridon mijnen Herder <rhyme label="c" type="m">minjoot</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Sal ick beminnen totter <rhyme label="c" type="m" corresp="#s2:l5">doodt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Laet desen Herder, o Bloem der <rhyme label="a" type="f">Bloemen</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Is ’t dat ghy mijn Vriendin wilt <rhyme label="b" type="m">zijn</rhyme>:</l>
        <l id="s3:l3" met="4" type="-+">Want aen u maeck’ ick nu <rhyme label="b" type="m" corresp="#s3:l2">ghemeyn</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Al mijn goedt en mijn <rhyme label="a" type="f" corresp="#s3:l1">rijckdommen</rhyme>:</l>
        <l id="s3:l5" met="4" type="-+">Liefste gunt my u liefde <rhyme label="c" type="m">geheel</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Ick sal u kleeden in ’t <rhyme label="c" type="m" corresp="#s3:l5">fluweel</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Señor, gelooft dat door u <rhyme label="a" type="f">gifte</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Mijn herte niet verand’ren <rhyme label="b" type="m">sal</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Van mijnen Herder sonder <rhyme label="b" type="m" corresp="#s4:l2">gal</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Die my dient naer mijn <rhyme label="a" type="f" corresp="#s4:l1">gelifte</rhyme>:</l>
        <l id="s4:l5" met="4" type="-+">V Coridon mijnen Herder <rhyme label="c" type="m">minjoot</rhyme></l>
        <l id="s4:l6" met="4" type="-+">Sal ick beminnen totter <rhyme label="c" type="m" corresp="#s4:l5">doodt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">O! Herderin, blijft niet soo <rhyme label="a" type="f">doove</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Verlaet doch desen slechten <rhyme label="b" type="m">bloedt</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Ick ben e’el en rijck van <rhyme label="b" type="m" corresp="#s5:l2">goedt</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">En manghel en is gheen <rhyme label="a" type="f" corresp="#s5:l1">roove</rhyme>:</l>
        <l id="s5:l5" met="4" type="-+">Liefste gunt my u liefde <rhyme label="c" type="m">geheel</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Ick sal u kleeden in ’t <rhyme label="c" type="m" corresp="#s5:l5">fluweel</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Geen gierigh hert, oft lust van <rhyme label="a" type="f">stammen</rhyme></l>
        <l id="s6:l2" met="4" type="-+">En sal my trecken van dees <rhyme label="b" type="m">min</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">Oock en weet ick niet den <rhyme label="b" type="m" corresp="#s6:l2">sin</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Van de hofs-geleerde <rhyme label="a" type="f" corresp="#s6:l1">Dammen</rhyme>:</l>
        <l id="s6:l5" met="4" type="-+">V Coridon mijnen Herder <rhyme label="c" type="m">minjoot</rhyme></l>
        <l id="s6:l6" met="4" type="-+">Sal ick beminnen totter <rhyme label="c" type="m" corresp="#s6:l5">doodt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">O! schoon’ Nymph, ghy doolt van <rhyme label="a" type="f">reden</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">’t En zy ghy desen plompaert <rhyme label="b" type="m">laet</rhyme>:</l>
        <l id="s7:l3" met="4" type="-+">Om te genieten metter <rhyme label="b" type="m" corresp="#s7:l2">daedt</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Een kasteel vol <rhyme label="a" type="f" corresp="#s7:l1">heerlijckheden</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Liefste gunt my u liefde <rhyme label="c" type="m">geheel</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Ick sal u kleeden in ’t <rhyme label="c" type="m" corresp="#s7:l5">fluweel</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Liever heb ick gerust te <rhyme label="a" type="f">slapen</rhyme></l>
        <l id="s8:l2" met="4" type="-+">In een kleyn huysken arm en <rhyme label="b" type="m">slecht</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Met mijnen getrouwen <rhyme label="b" type="m" corresp="#s8:l2">knecht</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Die vrolijck leeft met sijn <rhyme label="a" type="f" corresp="#s8:l1">Schapen</rhyme>:</l>
        <l id="s8:l5" met="4" type="-+">V Coridon mijnen Herder <rhyme label="c" type="m">minjoot</rhyme></l>
        <l id="s8:l6" met="4" type="-+">Sal ick beminnen totter <rhyme label="c" type="m" corresp="#s8:l5">doodt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Blijfdy aldus versteent van <rhyme label="a" type="f">herte</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Soo moet ick ’t koopen met de <rhyme label="b" type="m">doodt</rhyme>:</l>
        <l id="s9:l3" met="4" type="-+">Komt dan, staet my by, ’t is <rhyme label="b" type="m" corresp="#s9:l2">noodt</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">In mijn droefheydt ende <rhyme label="a" type="f" corresp="#s9:l1">smerte</rhyme>:</l>
        <l id="s9:l5" met="4" type="-+">Liefste gunt my u liefde <rhyme label="c" type="m">geheel</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Ick sal u kleeden in ’t <rhyme label="c" type="m" corresp="#s9:l5">fluweel</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Monsieur, ick ben oock wat <rhyme label="a" type="f">geslepen</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Ick merck uw’ woorden valsch te <rhyme label="b" type="m">zijn</rhyme>;</l>
        <l id="s10:l3" met="4" type="-+">Ick en ben gheen <rhyme label="b" type="m" corresp="#s10:l2">Medecijn</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Om te helpen uw’ <rhyme label="a" type="f" corresp="#s10:l1">gebreken</rhyme>:</l>
        <l id="s10:l5" met="4" type="-+">V Coridon mijnen Herder <rhyme label="c" type="m">minjoot</rhyme></l>
        <l id="s10:l6" met="4" type="-+">Sal ick beminnen totter <rhyme label="c" type="m" corresp="#s10:l5">doodt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Adieu dan, wreede <rhyme label="a" type="f">Herderinne</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Adieu Courage vol van <rhyme label="b" type="m">spijt</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Adieu Bië sonder <rhyme label="b" type="m" corresp="#s11:l2">soetheydt</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Adieu Maget sonder <rhyme label="a" type="f" corresp="#s11:l1">minne</rhyme>:</l>
        <l id="s11:l5" met="4" type="-+">Liefste gunt my u liefde <rhyme label="c" type="m">geheel</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">Ick sal u kleeden in ’t <rhyme label="c" type="m" corresp="#s11:l5">fluweel</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Adieu Flatteerder vol van <rhyme label="a" type="f">roemen</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Adieu o Minnaer voor een <rhyme label="b" type="m">reys</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Adieu Stoffer van ’t <rhyme label="b" type="m" corresp="#s12:l2">Palleys</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Adieu Plucker van ons <rhyme label="a" type="f" corresp="#s12:l1">bloemen</rhyme>:</l>
        <l id="s12:l5" met="4" type="-+">V Coridon mijnen Herder <rhyme label="c" type="m">minjoot</rhyme>,</l>
        <l id="s12:l6" met="4" type="-+">Sal ick beminnen totter <rhyme label="c" type="m" corresp="#s12:l5">doodt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

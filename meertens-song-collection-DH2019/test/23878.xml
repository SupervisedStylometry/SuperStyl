<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>23878</id>
    <date>
      <year-start>1592</year-start>
      <year-end>1592</year-end>
    </date>
    <tags>
      <tag standard-name="vermaanlied" translation="admonitory song">vermaanlied</tag>
      <tag standard-name="schriftuurlijk lied" translation="scripture song">schriftuurlijk lied</tag>
    </tags>
    <melody>Ik zeg adieu</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="2" type="-+">GEnade <rhyme label="a" type="m">soet</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Bermherticheyt en <rhyme label="b" type="f">vrede</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">Uan Godt seer <rhyme label="a" type="m" corresp="#s1:l1">goedt</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">De Uader vol <rhyme label="b" type="f" corresp="#s1:l2">waerhede</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">En van Christo onsen Heere <rhyme label="c" type="m">vailiant</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Sy v o vrinden aen elcken <rhyme label="c" type="m" corresp="#s1:l5">cant</rhyme>,</l>
        <l id="s1:l7" met="2" type="-+">Jn <rhyme label="c" type="m" corresp="#s1:l5">Waterlant</rhyme>,</l>
        <l id="s1:l8" met="2" type="-+">Tot heyl <rhyme label="c" type="m" corresp="#s1:l5">gheplant</rhyme>,</l>
        <l id="s1:l9" met="4" type="-+">Jn Christo Jesu onsen <rhyme label="c" type="m" corresp="#s1:l5">Heylant</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="2" type="-+">Urinden <rhyme label="a" type="m">eerbaer</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">U beroepinghe <rhyme label="b" type="f">heylich</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">Wilt nemen <rhyme label="a" type="m" corresp="#s2:l1">waer</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Jn desen tijt <rhyme label="b" type="f" corresp="#s2:l2">onveylich</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Uan alle zijden naket v den <rhyme label="c" type="m">strijdt</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Des wapent v wie dat ghy <rhyme label="c" type="m" corresp="#s2:l5">syt</rhyme></l>
        <l id="s2:l7" met="2" type="-+">Tis quade <rhyme label="c" type="m" corresp="#s2:l5">tijt</rhyme></l>
        <l id="s2:l8" met="2" type="-+">Rust v met <rhyme label="c" type="m" corresp="#s2:l5">vlydt</rhyme></l>
        <l id="s2:l9" met="4" type="-+">Ghy die Christum Jesum <rhyme label="c" type="m" corresp="#s2:l5">belydt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="2" type="-+">Elck een neemt <rhyme label="a" type="m">acht</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Op tsuyver Woort des <rhyme label="b" type="f">Heeren</rhyme></l>
        <l id="s3:l3" met="2" type="-+">Dat wel <rhyme label="a" type="m" corresp="#s3:l1">betracht</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">En laet in v <rhyme label="b" type="f" corresp="#s3:l2">vermeeren</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Jn Christo uwen herder <rhyme label="c" type="m">goedt</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Gelijck leuende rancken <rhyme label="c" type="m" corresp="#s3:l5">vroedt</rhyme>,</l>
        <l id="s3:l7" met="2" type="-+">Tot duecht v <rhyme label="c" type="m" corresp="#s3:l5">spoedt</rhyme>,</l>
        <l id="s3:l8" met="2" type="-+">Ureucht <rhyme label="c" type="m" corresp="#s3:l5">ouervloedt</rhyme>,</l>
        <l id="s3:l9" met="4" type="-+">Brengt voort ten prijse des Heeren <rhyme label="c" type="m" corresp="#s3:l5">soet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="2" type="-+">Jn wijsheyt <rhyme label="a" type="m">groyt</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En in Gods kennis <rhyme label="b" type="f">reene</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">Jn lieffden <rhyme label="a" type="m" corresp="#s4:l1">bloyt</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Gestadich al <rhyme label="b" type="f" corresp="#s4:l2">gemeene</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Want lieffde is so Christus <rhyme label="c" type="m">seyt</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Een kenteeken der <rhyme label="c" type="m" corresp="#s4:l5">Christenheyt</rhyme>,</l>
        <l id="s4:l7" met="2" type="-+">Jn liefd <rhyme label="c" type="m" corresp="#s4:l5">arbeyt</rhyme>,</l>
        <l id="s4:l8" met="2" type="-+">Daer van niet <rhyme label="c" type="m" corresp="#s4:l5">scheyt</rhyme></l>
        <l id="s4:l9" met="4" type="-+">Der lieffden werken altijt <rhyme label="c" type="m" corresp="#s4:l5">wtbreyt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="2" type="-+">Hout vrede <rhyme label="a" type="m">reijn</rhyme>.</l>
        <l id="s5:l2" met="3" type="-+">Daer in leeft en wilt <rhyme label="b" type="f">wandelen</rhyme></l>
        <l id="s5:l3" met="2" type="-+">Draecht int <rhyme label="a" type="m" corresp="#s5:l1">ghemeijn</rhyme>.</l>
        <l id="s5:l4" met="3" type="-+">Met wijssheyt deen den <rhyme label="b" type="f" corresp="#s5:l2">andren</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Twist niet om saken cleen en <rhyme label="c" type="m">licht</rhyme></l>
        <l id="s5:l6" met="4" type="-+">Noch ock malcandren niet en <rhyme label="c" type="m" corresp="#s5:l5">richt</rhyme></l>
        <l id="s5:l7" met="2" type="-+">Soeckt wat hier <rhyme label="c" type="m" corresp="#s5:l5">sticht</rhyme></l>
        <l id="s5:l8" met="2" type="-+">Al v <rhyme label="c" type="m" corresp="#s5:l5">gesicht</rhyme></l>
        <l id="s5:l9" met="4" type="-+">Laet naeder lieffden hebben <rhyme label="c" type="m" corresp="#s5:l5">ghewicht</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="2" type="-+">Twist en <rhyme label="a" type="m">partij</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Wilt vlieden talle <rhyme label="b" type="f">tijden</rhyme></l>
        <l id="s6:l3" met="2" type="-+">Oock <rhyme label="a" type="m" corresp="#s6:l1">secterij</rhyme></l>
        <l id="s6:l4" met="3" type="-+">En schueringhe <rhyme label="b" type="f" corresp="#s6:l2">vermijden</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Deylt niet, Christus heylich <rhyme label="c" type="m">Lichaem</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Sijn ledekens, wilt laten <rhyme label="c" type="m" corresp="#s6:l5">tzaem</rhyme>,</l>
        <l id="s6:l7" met="2" type="-+">Rechtet niet <rhyme label="c" type="m" corresp="#s6:l5">aen</rhyme>,</l>
        <l id="s6:l8" met="2" type="-+">Wat dint, tot <rhyme label="c" type="m" corresp="#s6:l5">blaem</rhyme>,</l>
        <l id="s6:l9" met="4" type="-+">En oneer, van des Heeren <rhyme label="c" type="m" corresp="#s6:l5">naem</rhyme>,</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="2" type="-+">Maer als <rhyme label="a" type="m">Leden</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Christi, suyuer en <rhyme label="b" type="f">goedich</rhyme>,</l>
        <l id="s7:l3" met="2" type="-+">Leeft in <rhyme label="a" type="m" corresp="#s7:l1">vreeden</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Uerdrachtsaem, en <rhyme label="b" type="f" corresp="#s7:l2">lackmoedich</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Weest in v straffen, niet te <rhyme label="c" type="m">snel</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Christi exempel, en <rhyme label="c" type="m" corresp="#s7:l5">instel</rhyme>:</l>
        <l id="s7:l7" met="2" type="-+">Wilt volgen <rhyme label="c" type="m" corresp="#s7:l5">wel</rhyme>,</l>
        <l id="s7:l8" met="2" type="-+">Tis Godts <rhyme label="c" type="m" corresp="#s7:l5">bevel</rhyme>,</l>
        <l id="s7:l9" met="4" type="-+">Ghy alle die sijt, onder <rhyme label="c" type="m" corresp="#s7:l5">Jsrahel</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="2" type="-+">Nedrich en <rhyme label="a" type="m">cleijn</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Wilt v altijt <rhyme label="b" type="f">bewijsen</rhyme>,</l>
        <l id="s8:l3" met="2" type="-+">Oodtmoedich <rhyme label="a" type="m" corresp="#s8:l1">reijn</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Wat slecht is, dat wilt <rhyme label="b" type="f" corresp="#s8:l2">prijsen</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Soeckt niet wat hier groot is <rhyme label="c" type="m">geacht</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Christi nedricheyt, wel <rhyme label="c" type="m" corresp="#s8:l5">betracht</rhyme>,</l>
        <l id="s8:l7" met="2" type="-+">Hebt die met <rhyme label="c" type="m" corresp="#s8:l5">macht</rhyme>,</l>
        <l id="s8:l8" met="2" type="-+">Jn v <rhyme label="c" type="m" corresp="#s8:l5">gedacht</rhyme>,</l>
        <l id="s8:l9" met="4" type="-+">En daer van sprecket dach ende <rhyme label="c" type="m" corresp="#s8:l5">nacht</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="2" type="-+">Satan seer <rhyme label="a" type="m">fel</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Jn dese quade <rhyme label="b" type="f">dagen</rhyme>,</l>
        <l id="s9:l3" met="2" type="-+">Wederstaet <rhyme label="a" type="m" corresp="#s9:l1">snel</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Ock alle sijn <rhyme label="b" type="f" corresp="#s9:l2">raedtslagen</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Waeckt ende bidt, sonder <rhyme label="c" type="m">verlaet</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Nuchtren, altijt ter wachte <rhyme label="c" type="m" corresp="#s9:l5">staet</rhyme>,</l>
        <l id="s9:l7" met="2" type="-+">Tis Petrus <rhyme label="c" type="m" corresp="#s9:l5">raedt</rhyme>,</l>
        <l id="s9:l8" met="2" type="-+">Die niet <rhyme label="c" type="m" corresp="#s9:l5">versmaet</rhyme>,</l>
        <l id="s9:l9" met="4" type="-+">U Herder Jesus, altijt <rhyme label="c" type="m" corresp="#s9:l5">naergaet</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="2" type="-+">Rijck en <rhyme label="a" type="m">vruchtbaer</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Jnt goede wordt <rhyme label="b" type="f">beuonden</rhyme>,</l>
        <l id="s10:l3" met="2" type="-+">Als lichten <rhyme label="a" type="m" corresp="#s10:l1">claer</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Weest lichtende, tallen <rhyme label="b" type="f" corresp="#s10:l2">standen</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Met Christum Jesum sat <rhyme label="c" type="m">aengedaen</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Jn hem wilt leuen, ende <rhyme label="c" type="m" corresp="#s10:l5">staen</rhyme>,</l>
        <l id="s10:l7" met="2" type="-+">Ghy sult <rhyme label="c" type="m" corresp="#s10:l5">bequaem</rhyme>,</l>
        <l id="s10:l8" met="2" type="-+">De croen <rhyme label="c" type="m" corresp="#s10:l5">ontfaen</rhyme>,</l>
        <l id="s10:l9" met="4" type="-+">Dit schenck ick v al tot een <rhyme label="c" type="m" corresp="#s10:l5">vermaen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Die d'Ootmoedicheydt <rhyme label="a" type="f">betrachten</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Die be-co-men al-len <rhyme label="b" type="m">deught</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Die de wereldts eer <rhyme label="a" type="f" corresp="#s1:l1">verachten</rhyme></l>
        <l id="s1:l4" met="4" type="+-">Zijn in Godt altijdt <rhyme label="b" type="m" corresp="#s1:l2">verheught</rhyme>.</l>
        <l id="s1:l5" met="4" type="+-">Saligh is hy die <rhyme label="c" type="f">ghevonden</rhyme></l>
        <l id="s1:l6" met="4" type="+-">In Godts licht heeft sijnen <rhyme label="d" type="m">niet</rhyme>,</l>
        <l id="s1:l7" met="4" type="+-">En belijdt hem t'alle <rhyme label="c" type="f" corresp="#s1:l5">stonden</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Soeckt versmaetheydt, achtingh <rhyme label="d" type="m" corresp="#s1:l6">vliedt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Wie is die den niet wilt <rhyme label="a" type="f">kennen</rhyme>?</l>
        <l id="s2:l2" met="4" type="+-">Wie wilt d' ooghen daer op <rhyme label="b" type="m">slaen</rhyme>?</l>
        <l id="s2:l3" met="4" type="+-">Niemandt wilt hem dat <rhyme label="a" type="f" corresp="#s2:l1">ghewennen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Om de hooverdy t' <rhyme label="b" type="m" corresp="#s2:l2">ontgaen</rhyme>.</l>
        <l id="s2:l5" met="4" type="+-">Saligh is hy die <rhyme label="c" type="f">ghevonden</rhyme></l>
        <l id="s2:l6" met="4" type="+-">In Godts licht heeft sijnen <rhyme label="d" type="m">niet</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">En belijdt hem t'alle <rhyme label="c" type="f" corresp="#s2:l5">stonden</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Soeckt versmaetheydt, achtingh <rhyme label="d" type="m" corresp="#s2:l6">vliedt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Waer't dat w'onsen niet <rhyme label="a" type="f">doorsaghen</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Waer hy ons staegh in 't <rhyme label="b" type="m">ghesicht</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Als de minste ons te <rhyme label="a" type="f" corresp="#s3:l1">draghen</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Waer ons dan oock al te <rhyme label="b" type="m" corresp="#s3:l2">licht</rhyme>.</l>
        <l id="s3:l5" met="4" type="+-">Saligh is hy die <rhyme label="c" type="f">ghevonden</rhyme></l>
        <l id="s3:l6" met="4" type="+-">In Godts licht heeft sijnen <rhyme label="d" type="m">niet</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">En belijdt hem t'alle <rhyme label="c" type="f" corresp="#s3:l5">stonden</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Soeckt versmaetheydt, achtingh <rhyme label="d" type="m" corresp="#s3:l6">vliedt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Noot wordt nedricheydt <rhyme label="a" type="f">ontnomen</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Hem die sich is <rhyme label="b" type="m">openbaer</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Swaerlijck is die te <rhyme label="a" type="f" corresp="#s4:l1">becomen</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Want die kennis is te <rhyme label="b" type="m" corresp="#s4:l2">swaer</rhyme>.</l>
        <l id="s4:l5" met="4" type="+-">Saligh is hy die <rhyme label="c" type="f">ghevonden</rhyme></l>
        <l id="s4:l6" met="4" type="+-">In Godts licht heeft sijnen <rhyme label="d" type="m">niet</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">En belijdt hem t'alle <rhyme label="c" type="f" corresp="#s4:l5">stonden</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Soeckt versmaetheydt, achtingh <rhyme label="d" type="m" corresp="#s4:l6">vliedt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Wie wilt hem oock soo <rhyme label="a" type="f">versterven</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Dat hy niet sal willen <rhyme label="b" type="m">zijn</rhyme>?</l>
        <l id="s5:l3" met="4" type="+-">Want de achtingh wy noot <rhyme label="a" type="f" corresp="#s5:l1">derven</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Dan met droefheyt en met <rhyme label="b" type="m" corresp="#s5:l2">pijn</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">Saligh is hy die <rhyme label="c" type="f">ghevonden</rhyme></l>
        <l id="s5:l6" met="4" type="+-">In Godts licht heeft sijnen <rhyme label="d" type="m">niet</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">En belijdt hem t'alle <rhyme label="c" type="f" corresp="#s5:l5">stonden</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">Soeckt versmaetheydt, achtingh <rhyme label="d" type="m" corresp="#s5:l6">vliedt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">'t Is in neerheyt al <rhyme label="a" type="f">gheleghen</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Want van haer comt alle <rhyme label="b" type="m">goedt</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Die tot alle deught sal <rhyme label="a" type="f" corresp="#s6:l1">weghen</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">De ghebreken sterven <rhyme label="b" type="m" corresp="#s6:l2">doet</rhyme>.</l>
        <l id="s6:l5" met="4" type="+-">Saligh is hy die <rhyme label="c" type="f">ghevonden</rhyme></l>
        <l id="s6:l6" met="4" type="+-">In Godts licht heeft sijnen <rhyme label="d" type="m">niet</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">En belijdt hem t'alle <rhyme label="c" type="f" corresp="#s6:l5">stonden</rhyme>,</l>
        <l id="s6:l8" met="4" type="+-">Soeckt versmaetheydt, achtingh <rhyme label="d" type="m" corresp="#s6:l6">vliedt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Nedricheydt voor grondt wilt <rhyme label="a" type="f">stellen</rhyme></l>
        <l id="s7:l2" met="4" type="+-">Van den bouw die ghy hebt <rhyme label="b" type="m">voor</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Dus den vyandt noot hem <rhyme label="a" type="f" corresp="#s7:l1">vellen</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Sal ter aerden ergens <rhyme label="b" type="m" corresp="#s7:l2">door</rhyme>.</l>
        <l id="s7:l5" met="4" type="+-">Saligh is hy die <rhyme label="c" type="f">ghevonden</rhyme></l>
        <l id="s7:l6" met="4" type="+-">In Godts licht heeft sijnen <rhyme label="d" type="m">niet</rhyme>,</l>
        <l id="s7:l7" met="4" type="+-">En belijdt hem t'alle <rhyme label="c" type="f" corresp="#s7:l5">stonden</rhyme>,</l>
        <l id="s7:l8" met="4" type="+-">Soeckt versmaetheydt, achtingh <rhyme label="d" type="m" corresp="#s7:l6">vliedt</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Siet de duyvels met u <rhyme label="a" type="f">gecken</rhyme>!</l>
        <l id="s8:l2" met="4" type="+-">Wanneer ghy bouwt sonder <rhyme label="b" type="m">grondt</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Want al wat ghy op wilt <rhyme label="a" type="f" corresp="#s8:l1">trecken</rhyme></l>
        <l id="s8:l4" met="4" type="+-">Blasen sy om verr' <rhyme label="b" type="m" corresp="#s8:l2">terstont</rhyme>.</l>
        <l id="s8:l5" met="4" type="+-">Saligh is hy die <rhyme label="c" type="f">ghevonden</rhyme></l>
        <l id="s8:l6" met="4" type="+-">In Godts licht heeft sijnen <rhyme label="d" type="m">niet</rhyme>,</l>
        <l id="s8:l7" met="4" type="+-">En belijdt hem t'alle <rhyme label="c" type="f" corresp="#s8:l5">stonden</rhyme>,</l>
        <l id="s8:l8" met="4" type="+-">Soeckt versmaetheydt, achtingh <rhyme label="d" type="m" corresp="#s8:l6">vliedt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">'t Wilt wel gheestelijck al <rhyme label="a" type="f">worden</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Maer 't beginsel 't al <rhyme label="b" type="m">vergeet</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Niemandt wilt daer toe sich <rhyme label="a" type="f" corresp="#s9:l1">porden</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Van die deught men't minste <rhyme label="b" type="m" corresp="#s9:l2">weet</rhyme>.</l>
        <l id="s9:l5" met="4" type="+-">Saligh is hy die <rhyme label="c" type="f">ghevonden</rhyme></l>
        <l id="s9:l6" met="4" type="+-">In Godts licht heeft sijnen <rhyme label="d" type="m">niet</rhyme>,</l>
        <l id="s9:l7" met="4" type="+-">En belijdt hem t'alle <rhyme label="c" type="f" corresp="#s9:l5">stonden</rhyme>,</l>
        <l id="s9:l8" met="4" type="+-">Soeckt versmaetheydt, achtingh <rhyme label="d" type="m" corresp="#s9:l6">vliedt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Wat sal u het kleet doch <rhyme label="a" type="f">baten</rhyme>,</l>
        <l id="s10:l2" met="4" type="+-">Als den gheest u soo <rhyme label="b" type="m">ontbreckt</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Die d' Ootmoedigheydt doet <rhyme label="a" type="f" corresp="#s10:l1">laten</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">Dickwils meer tot grootsheydt <rhyme label="b" type="m" corresp="#s10:l2">weckt</rhyme>.</l>
        <l id="s10:l5" met="4" type="+-">Saligh is hy die <rhyme label="c" type="f">ghevonden</rhyme></l>
        <l id="s10:l6" met="4" type="+-">In Godts licht heeft sijnen <rhyme label="d" type="m">niet</rhyme>,</l>
        <l id="s10:l7" met="4" type="+-">En belijdt hem t'alle <rhyme label="c" type="f" corresp="#s10:l5">stonden</rhyme>,</l>
        <l id="s10:l8" met="4" type="+-">Soeckt versmaetheydt, achtingh <rhyme label="d" type="m" corresp="#s10:l6">vliedt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Gheestelijck ick 't kleet sal <rhyme label="a" type="f">noemen</rhyme></l>
        <l id="s11:l2" met="4" type="+-">Dat tot nedricheyt u <rhyme label="b" type="m">dient</rhyme>,</l>
        <l id="s11:l3" met="4" type="+-">En voor wereldts sal ick <rhyme label="a" type="f" corresp="#s11:l1">doemen</rhyme></l>
        <l id="s11:l4" met="4" type="+-">Dat gh'om d'achtbaerheyt <rhyme label="b" type="m" corresp="#s11:l2">bemint</rhyme>.</l>
        <l id="s11:l5" met="4" type="+-">Saligh is hy die <rhyme label="c" type="f">ghevonden</rhyme></l>
        <l id="s11:l6" met="4" type="+-">In Godts licht heeft sijnen <rhyme label="d" type="m">niet</rhyme>,</l>
        <l id="s11:l7" met="4" type="+-">En belijdt hem t'alle <rhyme label="c" type="f" corresp="#s11:l5">stonden</rhyme>,</l>
        <l id="s11:l8" met="4" type="+-">Soeckt versmaetheydt, achtingh <rhyme label="d" type="m" corresp="#s11:l6">vliedt</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Ah bemint den grondt der <rhyme label="a" type="f">deughden</rhyme>,</l>
        <l id="s12:l2" met="4" type="+-">Het plantsoen, het sop, 't <rhyme label="b" type="m">behoudt</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">'t Is den oorspronck aller <rhyme label="a" type="f" corresp="#s12:l1">vreughden</rhyme>,</l>
        <l id="s12:l4" met="4" type="+-">Met de liefde Godts <rhyme label="b" type="m" corresp="#s12:l2">ghetrouwt</rhyme>.</l>
        <l id="s12:l5" met="4" type="+-">Saligh is hy die <rhyme label="c" type="f">ghevonden</rhyme></l>
        <l id="s12:l6" met="4" type="+-">In Godts licht heeft sijnen <rhyme label="d" type="m">niet</rhyme>,</l>
        <l id="s12:l7" met="4" type="+-">En belijdt hem t'alle <rhyme label="c" type="f" corresp="#s12:l5">stonden</rhyme>,</l>
        <l id="s12:l8" met="4" type="+-">Soeckt versmaetheydt, achtingh <rhyme label="d" type="m" corresp="#s12:l6">vliedt</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Iesv, die voor al ons <rhyme label="a" type="f">leeren</rhyme></l>
        <l id="s13:l2" met="4" type="+-">Die schoon deught hier comen <rhyme label="b" type="m">zijt</rhyme>,</l>
        <l id="s13:l3" met="4" type="+-">Wilt ons hert tot haer doch <rhyme label="a" type="f" corresp="#s13:l1">keeren</rhyme>,</l>
        <l id="s13:l4" met="4" type="+-">Die bewercken doet <rhyme label="b" type="m" corresp="#s13:l2">altijdt</rhyme>.</l>
        <l id="s13:l5" met="4" type="+-">Saligh is hy die <rhyme label="c" type="f">ghevonden</rhyme></l>
        <l id="s13:l6" met="4" type="+-">In Godts licht heeft sijnen <rhyme label="d" type="m">niet</rhyme>,</l>
        <l id="s13:l7" met="4" type="+-">En belijdt hem t'alle <rhyme label="c" type="f" corresp="#s13:l5">stonden</rhyme>,</l>
        <l id="s13:l8" met="4" type="+-">Soeckt versmaetheydt, achtingh <rhyme label="d" type="m" corresp="#s13:l6">vliedt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

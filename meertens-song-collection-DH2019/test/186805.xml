  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Uit diepten van <rhyme label="a" type="f">ellenden</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Riep ik, om hulp, o <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Tot u, die heil kunt <rhyme label="a" type="f" corresp="#s1:l1">senden</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Als ik 't in nood <rhyme label="b" type="m" corresp="#s1:l2">begeer</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Heer, wil myn stemme <rhyme label="c" type="f">hooren</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Merk op myn stems <rhyme label="d" type="m">gesmeek</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">En neig tot my uw <rhyme label="c" type="f" corresp="#s1:l5">ooren</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Al eer ik gansch <rhyme label="d" type="m" corresp="#s1:l6">besweek</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Heer, zooge wilt, na <rhyme label="a" type="f">reeden</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Al 't onrecht gaade <rhyme label="b" type="m">slaan</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">En dus ten oordeel <rhyme label="a" type="f" corresp="#s2:l1">treeden</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Wie, Heer, zal dan <rhyme label="b" type="m" corresp="#s2:l2">bestaan</rhyme>?</l>
        <l id="s2:l5" met="3" type="-+">Maar by uw vriendlik <rhyme label="c" type="f">weesen</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Vindt elk <rhyme label="d" type="m">vergiffenis</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Op dat men u zou <rhyme label="c" type="f" corresp="#s2:l5">vreesen</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Zo als 't betaamlik <rhyme label="d" type="m" corresp="#s2:l6">is</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ik bleef den Heere <rhyme label="a" type="f">wachten</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Myn ziel heeft lang <rhyme label="b" type="m">gewacht</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Noch hoop ik, gansche <rhyme label="a" type="f" corresp="#s3:l1">nachten</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Tot hy syn woord <rhyme label="b" type="m" corresp="#s3:l2">volbragt</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">De wachter wacht den <rhyme label="c" type="f">morgen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Ja wacht de <rhyme label="d" type="m">morgenkeer</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Maar myne ziel, vol <rhyme label="c" type="f" corresp="#s3:l5">sorgen</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Wacht op den Heer veel <rhyme label="d" type="m" corresp="#s3:l6">meer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">O Israël, hoop <rhyme label="a" type="f">staadig</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Op God, den Heer, <rhyme label="b" type="m">alleen</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Want hy, veelsins <rhyme label="a" type="f" corresp="#s4:l1">genaadig</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Verlost seer gaarn met <rhyme label="b" type="m" corresp="#s4:l2">een</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">De Heer, met <rhyme label="c" type="f">meedelyden</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Voor Israël <rhyme label="d" type="m">gereed</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Zal hem alsins <rhyme label="c" type="f" corresp="#s4:l5">bevryden</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Van 't onrecht, dat hy <rhyme label="d" type="m" corresp="#s4:l6">deed</rhyme>.</l>
      </lg>
    </lg>
  </text>

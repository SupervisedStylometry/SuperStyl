  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">ALs Jesus gingh op eenen <rhyme label="a" type="m">stondt</rhyme></l>
        <l id="s1:l2" met="3" type="-+">By 't Meyr van <rhyme label="b" type="f">Galileën</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Petrum en Andream daer <rhyme label="a" type="m" corresp="#s1:l1">vondt</rhyme></l>
        <l id="s1:l4" met="3" type="-+">'t Net werpen in de <rhyme label="b" type="f" corresp="#s1:l2">Zeën</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Volght mijn, ik sal, hy tot haer <rhyme label="a" type="m">seyd'</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">U Menschen-visschers <rhyme label="b" type="f">maken</rhyme>:</l>
        <l id="s2:l3" met="4" type="-+">En sy volghden straks <rhyme label="a" type="m" corresp="#s2:l1">allebeyd'</rhyme>.</l>
        <l id="s2:l4" met="3" type="-+">Sijn dit geen wonder <rhyme label="b" type="f" corresp="#s2:l2">saeken</rhyme>?</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Hy Jacob, en Joannem <rhyme label="a" type="m">mee</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Heeft daer ontrent <rhyme label="b" type="f">gevonden</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">'t Waren Kinders van <rhyme label="a" type="m" corresp="#s3:l1">Sebedé</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Die in het Schipken <rhyme label="b" type="f" corresp="#s3:l2">stonden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">En datelijken riep hy <rhyme label="a" type="m">haer</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En sy sijn ook <rhyme label="b" type="f">gekoomen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Lieten daer haer netten en <rhyme label="a" type="m" corresp="#s4:l1">vaêr</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Niet hebbens' meed' <rhyme label="b" type="f" corresp="#s4:l2">genoomen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">En ondertusschen quam <rhyme label="a" type="m">aldaer</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Goodts Woordt te hooren <rhyme label="b" type="f">leere</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Van 't volk een seer maghtige <rhyme label="a" type="m" corresp="#s5:l1">schaer</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Als hy stondt neffens 't <rhyme label="b" type="f" corresp="#s5:l2">Meere</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">In Petrus Schipken hy in <rhyme label="a" type="m">tradt</rhyme></l>
        <l id="s6:l2" met="3" type="-+">En liet wat van 't Landt <rhyme label="b" type="f">steeken</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Als in een Preekstoel hy daer <rhyme label="a" type="m" corresp="#s6:l1">sat</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Begond' daer soo te <rhyme label="b" type="f" corresp="#s6:l2">preeken</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">En daer na hy tot Petrus <rhyme label="a" type="m">seydt</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Steek of het Schip van <rhyme label="b" type="f">landen</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Ende maekt uw' netten <rhyme label="a" type="m" corresp="#s7:l1">bereydt</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Om Visch in Zee te <rhyme label="b" type="f" corresp="#s7:l2">vanden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Maer Petrus seydt t'vergeefs, o <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Wy hebben d'heele <rhyme label="b" type="f">naghte</rhyme></l>
        <l id="s8:l3" met="4" type="-+">G'arbeyt, in uw' woordt sal ik <rhyme label="a" type="m" corresp="#s8:l1">weer</rhyme></l>
        <l id="s8:l4" met="3" type="-+">'t Net werpen, en vangk <rhyme label="b" type="f" corresp="#s8:l2">waghte</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Hy kreegh terstondt een vangk soo <rhyme label="a" type="m">groot</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Dat die het net al <rhyme label="b" type="f">krenkten</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Waerom hy om hulpe in <rhyme label="a" type="m" corresp="#s9:l1">noot</rhyme></l>
        <l id="s9:l4" met="3" type="-+">De ander Maets ook <rhyme label="b" type="f" corresp="#s9:l2">wenkten</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">De Maets die sijn gekoomen <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">'t Net samen op te <rhyme label="b" type="f">halen</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Beyd' de Scheepkens vol sijn <rhyme label="a" type="m" corresp="#s10:l1">gedaen</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Soo dat die wouden <rhyme label="b" type="f" corresp="#s10:l2">dalen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Wanneer dat Simon Petrus <rhyme label="a" type="m">sagh</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Begon hem te <rhyme label="b" type="f">vervare</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Haestigh op sijn knyen hy <rhyme label="a" type="m" corresp="#s11:l1">lagh</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Seydt, gaet van mijn <rhyme label="b" type="f" corresp="#s11:l2">Sondare</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Maer Jesus hem seydt met 'er <rhyme label="a" type="m">vlijt</rhyme>,</l>
        <l id="s12:l2" met="3" type="-+">Simon en wilt niet <rhyme label="b" type="f">vreesen</rhyme>;</l>
        <l id="s12:l3" met="4" type="-+">Want gy nogh sult na desen <rhyme label="a" type="m" corresp="#s12:l1">tijt</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Der Menschen-visscher <rhyme label="b" type="f" corresp="#s12:l2">weesen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">De Scheepkens broghten sy aen <rhyme label="a" type="m">landt</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">En gingen die <rhyme label="b" type="f">ophalen</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">En verlieten al hare <rhyme label="a" type="m" corresp="#s13:l1">pandt</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">En volghd' hem <rhyme label="b" type="f" corresp="#s13:l2">al-te-malen</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">O lieve Iesus, roept ons <rhyme label="a" type="m">mee</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Op dat wy u ook <rhyme label="b" type="f">volgen</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Dees bedroefde Weereltsche <rhyme label="a" type="m" corresp="#s14:l1">Zee</rhyme></l>
        <l id="s14:l4" met="3" type="-+">Die is togh soo <rhyme label="b" type="f" corresp="#s14:l2">verbolgen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

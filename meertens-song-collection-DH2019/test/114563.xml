  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">HOe seer is Godts Kerck <rhyme label="a" type="m">ghebloeit</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Door het bloet der <rhyme label="b" type="f">Martelaren</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Die daer door meer is <rhyme label="a" type="m" corresp="#s1:l1">ghegroeit</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Veel meer kinders heeft gaen <rhyme label="b" type="f" corresp="#s1:l2">baren</rhyme></l>
        <l id="s1:l5" met="4" type="+-">Door dat al te vruchtbaer <rhyme label="c" type="m">saet</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Teghens den Tyrannen <rhyme label="c" type="m" corresp="#s1:l5">raet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Die haer wilde doen <rhyme label="a" type="m">vergaen</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Door het moorden, door het <rhyme label="b" type="f">branden</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Met veel pijnen te doen <rhyme label="a" type="m" corresp="#s2:l1">aen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Te vernielen met de <rhyme label="b" type="f" corresp="#s2:l2">tanden</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Vande leeuwen t'alle <rhyme label="c" type="m">kant</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Maer vermeerdert wiert als <rhyme label="c" type="m" corresp="#s2:l5">sant</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Onder dit gheluckich <rhyme label="a" type="m">saet</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Wort Donatiaen <rhyme label="b" type="f">ghevonden</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Met sijn broeder, door den <rhyme label="a" type="m" corresp="#s3:l1">haet</rhyme></l>
        <l id="s3:l4" met="4" type="+-">Van het Heydens volck, <rhyme label="b" type="f" corresp="#s3:l2">ghebonden</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">En ghehanghen <rhyme label="c" type="m">allebey</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Seer ghepijnt in een <rhyme label="c" type="m" corresp="#s3:l5">palley</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Waer sy in gheheel den <rhyme label="a" type="m">nacht</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Wel ghemoet Heer Iesum <rhyme label="b" type="f">baden</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Loofden hem met alle <rhyme label="a" type="m" corresp="#s4:l1">cracht</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Danckten seer voor sijn <rhyme label="b" type="f" corresp="#s4:l2">ghenaden</rhyme>,</l>
        <l id="s4:l5" met="4" type="+-">Met een onverwonnen <rhyme label="c" type="m">hert</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">In die overgroote <rhyme label="c" type="m" corresp="#s4:l5">smert</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Daechs darnaer zijn sy <rhyme label="a" type="m">berooft</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Van hun leven, eerst <rhyme label="b" type="f">doorsteken</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Met een sperr', en dan <rhyme label="a" type="m" corresp="#s5:l1">onthooft</rhyme>.</l>
        <l id="s5:l4" met="4" type="+-">Doch in hen is wel <rhyme label="b" type="f" corresp="#s5:l2">ghebleken</rhyme></l>
        <l id="s5:l5" met="4" type="+-">Dat te boven graties <rhyme label="c" type="m">macht</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Verr' gaet aller pijnen <rhyme label="c" type="m" corresp="#s5:l5">cracht</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Vrome helten, wy u <rhyme label="a" type="m">bey</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Roepen aen: door u <rhyme label="b" type="f">ghebeden</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Maeckt dat Godt ons soo <rhyme label="a" type="m" corresp="#s6:l1">berey</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Teghen Sathan, dat <rhyme label="b" type="f" corresp="#s6:l2">ghestreden</rhyme></l>
        <l id="s6:l5" met="4" type="+-">Van ons word' 'nen goeden <rhyme label="c" type="m">strijdt</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Om met u te zijn <rhyme label="c" type="m" corresp="#s6:l5">verblijt</rhyme>.</l>
      </lg>
    </lg>
  </text>

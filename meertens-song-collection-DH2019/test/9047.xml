    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">VRolijk hert! maackt groot den <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s1:l2" met="2" type="+-">Geeft hem <rhyme label="a" type="m" corresp="#s1:l1">eer</rhyme>;</l>
        <l id="s1:l3" met="4" type="+-">Halelu-jah! zy mijn <rhyme label="b" type="f">Reytrant</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Ieugdig hert en Geest <rhyme label="c" type="m">verheugt</rhyme>,</l>
        <l id="s1:l5" met="2" type="+-">Prijst de <rhyme label="c" type="m" corresp="#s1:l4">Deugd</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Van mijn God, mijn Rots, mijn <rhyme label="b" type="f" corresp="#s1:l3">Heylant</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Arm, veragt, verschopt, <rhyme label="a" type="m">versmaadt</rhyme>,</l>
        <l id="s2:l2" met="2" type="+-">Was mijn <rhyme label="a" type="m" corresp="#s2:l1">staat</rhyme>;</l>
        <l id="s2:l3" met="4" type="+-">Op my sag hy door de <rhyme label="b" type="f">wolcken</rhyme>:</l>
        <l id="s2:l4" met="4" type="+-">Sag, en keerden so mijn <rhyme label="c" type="m">druck</rhyme></l>
        <l id="s2:l5" met="2" type="+-">In <rhyme label="c" type="m" corresp="#s2:l4">geluck</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Dat verbaast staan land en <rhyme label="b" type="f" corresp="#s2:l3">volcken</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Groote, groote dingen <rhyme label="a" type="m">heeft</rhyme></l>
        <l id="s3:l2" met="2" type="+-">Hy die <rhyme label="a" type="m" corresp="#s3:l1">leeft</rhyme></l>
        <l id="s3:l3" met="4" type="+-">Aan my arme Maagt <rhyme label="b" type="f">bewesen</rhyme>.</l>
        <l id="s3:l4" met="4" type="+-">Dat niet my, maar hem den <rhyme label="c" type="m">roem</rhyme></l>
        <l id="s3:l5" met="2" type="+-">Heylig <rhyme label="c" type="m" corresp="#s3:l4">noem</rhyme>:</l>
        <l id="s3:l6" met="4" type="+-">Eeuwig sy sijn naam <rhyme label="b" type="f" corresp="#s3:l3">gepresen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Ah! wat is sijn goetheyd <rhyme label="a" type="m">groot</rhyme>!</l>
        <l id="s4:l2" met="2" type="+-">Dien in <rhyme label="a" type="m" corresp="#s4:l1">nood</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Eeuw, en eeuw na dees sal <rhyme label="b" type="f">prijsen</rhyme>.</l>
        <l id="s4:l4" met="4" type="+-">Want hy dien nu, die hem <rhyme label="c" type="m">vreest</rhyme></l>
        <l id="s4:l5" met="2" type="+-">In den <rhyme label="c" type="m" corresp="#s4:l4">Geest</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Sonder aansien wil <rhyme label="b" type="f" corresp="#s4:l3">bewijsen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Veel sijn s' Hemels <rhyme label="a" type="m">wonderda'an</rhyme></l>
        <l id="s5:l2" met="2" type="+-">Die <rhyme label="a" type="m" corresp="#s5:l1">gedaan</rhyme></l>
        <l id="s5:l3" met="4" type="+-">Sijn, door sijn almagtige <rhyme label="b" type="f">armen</rhyme>:</l>
        <l id="s5:l4" met="4" type="+-">Maar gering is, al dat <rhyme label="c" type="m">sterck</rhyme></l>
        <l id="s5:l5" met="2" type="+-">Is, by 't <rhyme label="c" type="m" corresp="#s5:l4">werck</rhyme></l>
        <l id="s5:l6" met="4" type="+-">Van dit eyndeloos <rhyme label="b" type="f" corresp="#s5:l3">ontfermen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Dien de wijsheyd, en de <rhyme label="a" type="m">moed</rhyme></l>
        <l id="s6:l2" met="2" type="+-">Swellen <rhyme label="a" type="m" corresp="#s6:l1">doet</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Door haar aardsch verstand tot hun <rhyme label="b" type="f">loff</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Stormt nu 's Hemels gram <rhyme label="c" type="m">gelaat</rhyme></l>
        <l id="s6:l5" met="2" type="+-">Met haar <rhyme label="c" type="m" corresp="#s6:l4">raad</rhyme></l>
        <l id="s6:l6" met="4" type="+-">En haar peynsen heen, als dun <rhyme label="b" type="f" corresp="#s6:l3">stoff</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Die verheven sijn in <rhyme label="a" type="m">eer</rhyme></l>
        <l id="s7:l2" met="2" type="+-">Werpt hy <rhyme label="a" type="m" corresp="#s7:l1">neer</rhyme>:</l>
        <l id="s7:l3" met="4" type="+-">(Wondre Godt!) en die <rhyme label="b" type="f">verschoven</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Sijn; herstelt, en regt hy <rhyme label="c" type="m">op</rhyme></l>
        <l id="s7:l5" met="2" type="+-">In den <rhyme label="c" type="m" corresp="#s7:l4">top</rhyme>:</l>
        <l id="s7:l6" met="4" type="+-">Daar toe comt sijn Soon van <rhyme label="b" type="f" corresp="#s7:l3">boven</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Al die hongerig na 't <rhyme label="a" type="m">Heyl</rhyme>,</l>
        <l id="s8:l2" met="2" type="+-">Hier op 't <rhyme label="a" type="m" corresp="#s8:l1">seyl</rhyme></l>
        <l id="s8:l3" met="4" type="+-">Gaat, werd hier door <rhyme label="b" type="f">begenadigt</rhyme>:</l>
        <l id="s8:l4" met="4" type="+-">Al dien rijck, en wel <rhyme label="c" type="m">ge-eert</rhyme></l>
        <l id="s8:l5" met="2" type="+-">Niet en <rhyme label="c" type="m" corresp="#s8:l4">deert</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Heen gesonden <rhyme label="b" type="f" corresp="#s8:l3">on-versadigt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Sijns Knegts Israels <rhyme label="a" type="m">geslagt</rhyme>,</l>
        <l id="s9:l2" met="2" type="+-">Hoe <rhyme label="a" type="m" corresp="#s9:l1">veragt</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Heeft hy goediglijck <rhyme label="b" type="f">verheven</rhyme>;</l>
        <l id="s9:l4" met="4" type="+-">Denckend' om het <rhyme label="c" type="m">Heyl-verbond</rhyme>,</l>
        <l id="s9:l5" met="2" type="+-">Dat sijn <rhyme label="c" type="m" corresp="#s9:l4">mond</rhyme></l>
        <l id="s9:l6" met="4" type="+-">Hem voor eeuwig had <rhyme label="b" type="f" corresp="#s9:l3">gegeven</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Als hy eens aan <rhyme label="a" type="m">Abraham</rhyme>,</l>
        <l id="s10:l2" met="2" type="+-">En sijn <rhyme label="a" type="m" corresp="#s10:l1">Stam</rhyme></l>
        <l id="s10:l3" met="4" type="+-">Onsen Vad'ren heeft <rhyme label="b" type="f">gesworen</rhyme>:</l>
        <l id="s10:l4" met="4" type="+-">Dien hy heeft uyt liefde <rhyme label="c" type="m">steyl</rhyme></l>
        <l id="s10:l5" met="2" type="+-">Tot dit <rhyme label="c" type="m" corresp="#s10:l4">heyl</rhyme></l>
        <l id="s10:l6" met="4" type="+-">Boven and'ren <rhyme label="b" type="f" corresp="#s10:l3">uytvercoren</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

    <melody>Nun freut euch liebe Christen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">GHeloovich Hert <rhyme label="a" type="m">Ghebenedy</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">End Loffsingh' dijnen <rhyme label="b" type="f">HEEren</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Ghedenck dat hy dijn Vader <rhyme label="a" type="m" corresp="#s1:l1">zy</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Dien ghy staedich sult <rhyme label="b" type="f" corresp="#s1:l2">Eeren</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Want ghy gheen uyre sonder <rhyme label="c" type="m">hem</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Met all' dijn Sorg' end all' dijn <rhyme label="c" type="m" corresp="#s1:l5">sinn'</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Dijn Leven condt <rhyme label="d" type="f">gheneeren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Van Herten hy dy Lieven <rhyme label="a" type="m">gaet</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Veel Goetheyts dy <rhyme label="b" type="f">bethoonet</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Vergheeft Daeg'lijcx dijn <rhyme label="a" type="m" corresp="#s2:l1">Missedaet</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">End dijn swackheyt <rhyme label="b" type="f" corresp="#s2:l2">verschoonet</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Syn Gheest vernieuwet dijn <rhyme label="c" type="m">gemoet</rhyme></l>
        <l id="s2:l6" met="4" type="-+">End Wapent dy van Hooft te <rhyme label="c" type="m" corresp="#s2:l5">Voet</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Den Vyant te <rhyme label="d" type="f">vercleynen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Barmherticheyt end alle <rhyme label="a" type="m">Goet</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Bewijst hy ons <rhyme label="b" type="f">Elenden</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Die haer van s'Werelts <rhyme label="a" type="m" corresp="#s3:l1">Overmoet</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Tot syne Waerheyt <rhyme label="b" type="f" corresp="#s3:l2">weynden</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Hy neemt ons als een Vader <rhyme label="c" type="m">op</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">End helpt dat wy den rechten <rhyme label="c" type="m" corresp="#s3:l5">Loop</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Ter Salicheyt <rhyme label="d" type="f">voleynden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Nae onse <rhyme label="a" type="m">Ongherechticheyt</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Heeft hy ons niet <rhyme label="b" type="f">vergouden</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Maer bruyckt aen ons syn <rhyme label="a" type="m" corresp="#s4:l1">Ghoedicheyt</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Als wy verderven <rhyme label="b" type="f" corresp="#s4:l2">souden</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Met syn Ghenaed' altoos <rhyme label="c" type="m">planteyt</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Is hy den genen al <rhyme label="c" type="m" corresp="#s4:l5">bereyt</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Die Hertlijcx hem <rhyme label="d" type="f">Aensoecken</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">HEEr dijn wel Aengevangen <rhyme label="a" type="m">Werck</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Wilt Saelichlijck <rhyme label="b" type="f">voleynden</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Maeckt ons Gelooff end Wandel <rhyme label="a" type="m" corresp="#s5:l1">sterck</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">End wilt van ons <rhyme label="b" type="f" corresp="#s5:l2">Affweynden</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">All' valsche Leer end <rhyme label="c" type="m">Argernis</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Behouden ons tot dijnen <rhyme label="c" type="m" corresp="#s5:l5">Prijs</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Saelich end Eewich <rhyme label="d" type="f">Amen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

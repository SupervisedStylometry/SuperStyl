    <melody>Ik klaag u Venus' dieren</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">AL dat Godt is <rhyme label="a" type="f">gegeven</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Heyligh der heyl'gen <rhyme label="b" type="m">is</rhyme>.</l>
        <l id="s1:l3" met="3" type="-+">Al waer door men <rhyme label="a" type="f" corresp="#s1:l1">verheven</rhyme></l>
        <l id="s1:l4" met="3" type="-+">d' Afgodery <rhyme label="b" type="m" corresp="#s1:l2">gewis</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Tot stof moet zijn <rhyme label="c" type="m">verbrandt</rhyme>;</l>
        <l id="s1:l6" met="3" type="-+">'t Silver van sulcke <rhyme label="d" type="f">beelden</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Mach men aen spijs of <rhyme label="c" type="m" corresp="#s1:l5">Landt</rhyme>.</l>
        <l id="s1:l8" met="3" type="-+">Besteden, noch aen <rhyme label="d" type="f" corresp="#s1:l6">weelden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Goods Beelden, Tempels, <rhyme label="a" type="f">Autaren</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Tot Godes eer <rhyme label="b" type="m">gewijt</rhyme>;</l>
        <l id="s2:l3" met="3" type="-+">Wiens Wydinge Goods <rhyme label="a" type="f" corresp="#s2:l1">scharen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Geviert heeft tijdt na <rhyme label="b" type="m" corresp="#s2:l2">tijdt</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Soo dese in de <rhyme label="c" type="m">macht</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Raken van quade <rhyme label="d" type="f">handen</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Al 't heylich wordt <rhyme label="c" type="m" corresp="#s2:l5">veracht</rhyme>;</l>
        <l id="s2:l8" met="3" type="-+">Breken, rooven en <rhyme label="d" type="f" corresp="#s2:l6">branden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Kloosters noch Priesters <rhyme label="a" type="f">sparen</rhyme>;</l>
        <l id="s3:l2" met="3" type="-+">Vernielen steen en <rhyme label="b" type="m">hout</rhyme>;</l>
        <l id="s3:l3" met="3" type="-+">Parels, silver <rhyme label="a" type="f" corresp="#s3:l1">bewaren</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Kelcken, sijde en <rhyme label="b" type="m" corresp="#s3:l2">gout</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Ist groot <rhyme label="c" type="m">Afgodery</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Hier mede Godt te <rhyme label="d" type="f">eeren</rhyme>?</l>
        <l id="s3:l7" met="3" type="-+">Hoe staet de boose <rhyme label="c" type="m" corresp="#s3:l5">vry</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Het beste te <rhyme label="d" type="f" corresp="#s3:l6">begeeren</rhyme>?</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Als sy hebbe <rhyme label="a" type="f">gestoolen</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Goods Tempels en <rhyme label="b" type="m">cieraedt</rhyme>:</l>
        <l id="s4:l3" met="3" type="-+">Steelt niet (soo Godt <rhyme label="a" type="f" corresp="#s4:l1">bevoolen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Heeft) stellen al te <rhyme label="b" type="m" corresp="#s4:l2">laet</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Gelijck verbetert <rhyme label="c" type="m">wordt</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Een Bloem-hof door het <rhyme label="d" type="f">vercken</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">De quade soo in 't <rhyme label="c" type="m" corresp="#s4:l5">kort</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Verbeteren Goods <rhyme label="d" type="f" corresp="#s4:l6">Kercken</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Sy late veel <rhyme label="a" type="f">vervallen</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">In veel hout of turf <rhyme label="b" type="m">leyt</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Veel worde Paerde <rhyme label="a" type="f" corresp="#s5:l1">stallen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">In veele men <rhyme label="b" type="m" corresp="#s5:l2">arbeyt</rhyme>.</l>
        <l id="s5:l5" met="3" type="-+">Soo ghy op de Kerck <rhyme label="c" type="m">let</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Waer in 's haer valsheydt <rhyme label="d" type="f">smeden</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Sy gaen sonder <rhyme label="c" type="m" corresp="#s5:l5">gebedt</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Daer in, ende uyt <rhyme label="d" type="f" corresp="#s5:l6">mede</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Met 't hart verkeert en <rhyme label="a" type="f">sinnen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Hier wordt vevloeckt Goods <rhyme label="b" type="m">kruys</rhyme>;</l>
        <l id="s6:l3" met="3" type="-+">Van buyten en van <rhyme label="a" type="f" corresp="#s6:l1">binnen</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Vercieren 't lijf en <rhyme label="b" type="m" corresp="#s6:l2">huys</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Haer Kerck is sonder <rhyme label="c" type="m">pronck</rhyme>.</l>
        <l id="s6:l6" met="3" type="-+">'t Hooft blijft gedeckt; geen <rhyme label="d" type="f">leden</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Men buyght in haer <rhyme label="c" type="m" corresp="#s6:l5">spelonck</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">In Dorpen noch in <rhyme label="d" type="f" corresp="#s6:l6">Steden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">In haer schuer buyten 't <rhyme label="a" type="f">preken</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Men gaet, met snoept, men <rhyme label="b" type="m">loopt</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Men nieuwe tijdingh <rhyme label="a" type="f" corresp="#s7:l1">spreken</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Men speelt, men raest, men <rhyme label="b" type="m" corresp="#s7:l2">koopt</rhyme>.</l>
        <l id="s7:l5" met="3" type="-+">Hier wordt verfoeyt, <rhyme label="c" type="m">verbant</rhyme>.</l>
        <l id="s7:l6" met="3" type="-+">Goods-dienst en <rhyme label="d" type="f">offerhanden</rhyme>.</l>
        <l id="s7:l7" met="3" type="-+">Geen tongh, geen pen, geen <rhyme label="c" type="m" corresp="#s7:l5">handt</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Kan schrijve al de <rhyme label="d" type="f" corresp="#s7:l6">schanden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Komt Jesu! tot ons <rhyme label="a" type="f">hede</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Als tot Zacheus <rhyme label="b" type="m">in</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Met saligheydt en <rhyme label="a" type="f" corresp="#s8:l1">vrede</rhyme>.</l>
        <l id="s8:l4" met="3" type="-+">De quade wil en <rhyme label="b" type="m" corresp="#s8:l2">zin</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Buyght soo, dat sy u <rhyme label="c" type="m">we'er</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Tempels end' heyligh <rhyme label="d" type="f">geven</rhyme>:</l>
        <l id="s8:l7" met="3" type="-+">Dat wy u lof en <rhyme label="c" type="m" corresp="#s8:l5">eer</rhyme></l>
        <l id="s8:l8" met="3" type="-+">Hier hooren en <rhyme label="d" type="f" corresp="#s8:l6">verheven</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

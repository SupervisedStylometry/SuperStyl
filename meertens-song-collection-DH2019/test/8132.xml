    <tags>
      <tag standard-name="geestelijk lied" translation="spiritual song">Geestelijk lied</tag>
    </tags>
    <melody>Als alle akers rijpen</melody>
    <categories/>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">STaet op mijn schoone <rhyme label="a" type="f">vriendinne</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Aenhoort uws bruydegoms <rhyme label="b" type="m">stem</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Ghy zijt die ick <rhyme label="a" type="f" corresp="#s1:l1">beminne</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Deur my suldy <rhyme label="a" type="f" corresp="#s1:l1">inwinne</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Dat Hemelsch <rhyme label="b" type="m" corresp="#s1:l2">Ierusalem</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Mijn kelck moet ghy hier <rhyme label="a" type="f">smaken</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">V licht laet schijnen <rhyme label="b" type="m">snel</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Wilt den slaper wacker <rhyme label="a" type="f" corresp="#s2:l1">maken</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En houdt hem altijts <rhyme label="a" type="f" corresp="#s2:l1">waken</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Want ick ten oordeel komen <rhyme label="b" type="m" corresp="#s2:l2">sel</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Den winter is <rhyme label="a" type="f">geweken</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Den reghen is wech <rhyme label="b" type="m">gegaen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Wilt nu de waerheyt <rhyme label="a" type="f" corresp="#s3:l1">preken</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Het is nu tijdt te <rhyme label="a" type="f" corresp="#s3:l1">spreken</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Want siet hoe schoon die bloemkens <rhyme label="b" type="m" corresp="#s3:l2">staen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">'Tghetal moet vervult <rhyme label="a" type="f">werden</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Van die ligghen onder de <rhyme label="b" type="m">Outaer</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Die haer leven niet en <rhyme label="a" type="f" corresp="#s4:l1">spaerden</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Want sy mijn woort <rhyme label="a" type="f" corresp="#s4:l1">verklaerden</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">En my beleden <rhyme label="b" type="m" corresp="#s4:l2">openbaer</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Dus gaet uyt <rhyme label="a" type="f">propheteren</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Leert haer de waerheyt <rhyme label="b" type="m">bloot</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">En wilt niet <rhyme label="a" type="f" corresp="#s5:l1">simuleeren</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Maer wilt haer te recht <rhyme label="a" type="f" corresp="#s5:l1">bekeeren</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Op dat sy wijcken vanden <rhyme label="b" type="m" corresp="#s5:l2">doodt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ick wil nae Iohels <rhyme label="a" type="f">leeren</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Op alle vleys storten mijn <rhyme label="b" type="m">gheest</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Sy sullen <rhyme label="a" type="f" corresp="#s6:l1">propheteren</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Iae droomen sullen de <rhyme label="a" type="f" corresp="#s6:l1">Heeren</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">Het sal vervult zijn, alsmen <rhyme label="b" type="m" corresp="#s6:l2">leest</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Seght dat sy my soecken <rhyme label="a" type="f">klachtigh</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Dewijl ick te vinden <rhyme label="b" type="m">bin</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Daer sy my bidden <rhyme label="a" type="f" corresp="#s7:l1">krachtigh</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Mijn woorden zijn <rhyme label="a" type="f" corresp="#s7:l1">ghedachtigh</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">En haer nu stellen nae mijn <rhyme label="b" type="m" corresp="#s7:l2">sin</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Ghelijck reghen en <rhyme label="a" type="f">sneede</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Niet weder tot my en <rhyme label="b" type="m">keert</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Soo en sal mijn woordt oock <rhyme label="a" type="f" corresp="#s8:l1">mede</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Niet ledigh van haer <rhyme label="a" type="f" corresp="#s8:l1">scheeden</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Maer 'tsal vrucht doen nae mijn <rhyme label="b" type="m" corresp="#s8:l2">begheert</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Dus wilt mijn woordt <rhyme label="a" type="f">verbreeden</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Mijn lief, mijn soete <rhyme label="b" type="m">Bruyt</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Deur landen en deur <rhyme label="a" type="f" corresp="#s9:l1">steden</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Weest met mijn woordt te <rhyme label="a" type="f" corresp="#s9:l1">vreden</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">En haer de Schrift te recht <rhyme label="b" type="m" corresp="#s9:l2">ontsluyt</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Want Amos doet oock <rhyme label="a" type="f">weten</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Datter hongher en dorst sal <rhyme label="b" type="m">sijn</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Gheen hongher om broodt te <rhyme label="a" type="f" corresp="#s10:l1">eten</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Noch dorst nae <rhyme label="a" type="f" corresp="#s10:l1">water-reten</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Maer slechs nae 'twoordt des levens <rhyme label="b" type="m" corresp="#s10:l2">fijn</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Comt hier mijn Bruydt <rhyme label="a" type="f">verheven</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Toont my u ghedachte <rhyme label="b" type="m">soet</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Al wordt ghy hier <rhyme label="a" type="f" corresp="#s11:l1">verdreven</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Wilt my altijdt <rhyme label="a" type="f" corresp="#s11:l1">aenkleven</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Ick sal u gheven al mijn <rhyme label="b" type="m" corresp="#s11:l2">goet</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">V stem, mijn Bruydt <rhyme label="a" type="f">vercoren</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Comt in mijn ooren <rhyme label="b" type="m">gaen</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Ick wil u druck <rhyme label="a" type="f" corresp="#s12:l1">verhooren</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Want sy willen <rhyme label="a" type="f" corresp="#s12:l1">verstooren</rhyme>,</l>
        <l id="s12:l5" met="4" type="-+">En achten niet op mijn <rhyme label="b" type="m" corresp="#s12:l2">vermaen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Comt mijn vriendinne <rhyme label="a" type="f">reyne</rhyme>.</l>
        <l id="s13:l2" met="3" type="-+">Ghy zijt soo schoonen <rhyme label="b" type="m">prieel</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">Ick bemin u lief <rhyme label="a" type="f" corresp="#s13:l1">alleyne</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Ghy zijt mijn bruydt <rhyme label="a" type="f" corresp="#s13:l1">certeyne</rhyme>,</l>
        <l id="s13:l5" met="4" type="-+">Ick hoor 'tgheluyt van uwe <rhyme label="b" type="m" corresp="#s13:l2">keel</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Ghy hebt twee duyven <rhyme label="a" type="f">ooghen</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">V tanden sijn snee <rhyme label="b" type="m">wit</rhyme>,</l>
        <l id="s14:l3" met="3" type="-+">Twee lippen <rhyme label="a" type="f" corresp="#s14:l1">onghelooghen</rhyme></l>
        <l id="s14:l4" met="3" type="-+">Met roosen verwe <rhyme label="a" type="f" corresp="#s14:l1">deurtoghen</rhyme>,</l>
        <l id="s14:l5" met="4" type="-+">Uwen hals vol schilden, aenhoort doch <rhyme label="b" type="m" corresp="#s14:l2">dit</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">V Wanghen als <rhyme label="a" type="f">granaten</rhyme>,</l>
        <l id="s15:l2" met="3" type="-+">V borstkens die zijn seer <rhyme label="b" type="m">soet</rhyme>,</l>
        <l id="s15:l3" met="3" type="-+">V hayr schoon uyter <rhyme label="a" type="f" corresp="#s15:l1">maten</rhyme>,</l>
        <l id="s15:l4" met="3" type="-+">Ghy gaet boven alle <rhyme label="a" type="f" corresp="#s15:l1">straten</rhyme>,</l>
        <l id="s15:l5" met="4" type="-+">Comt en ontfanght u kroone <rhyme label="b" type="m" corresp="#s15:l2">goet</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="3" type="-+">Gheen vervolgh alsoo <rhyme label="a" type="f">wreede</rhyme></l>
        <l id="s16:l2" met="3" type="-+">Te ghelijcken by de glorie <rhyme label="b" type="m">fijn</rhyme>,</l>
        <l id="s16:l3" met="3" type="-+">Al hebt ghy hier smaet <rhyme label="a" type="f" corresp="#s16:l1">gheleden</rhyme></l>
        <l id="s16:l4" met="3" type="-+">Weest doch nu wel te <rhyme label="a" type="f" corresp="#s16:l1">vreden</rhyme>,</l>
        <l id="s16:l5" met="4" type="-+">Eeuwigh suldy in vreughden <rhyme label="b" type="m" corresp="#s16:l2">zijn</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="3" type="-+">Comt Princelijcke <rhyme label="a" type="f">nacy</rhyme></l>
        <l id="s17:l2" met="3" type="-+">Comt, eet, ende werdt <rhyme label="b" type="m">versaet</rhyme>,</l>
        <l id="s17:l3" met="3" type="-+">Ghy staet wel in mijn <rhyme label="a" type="f" corresp="#s17:l1">gracy</rhyme>,</l>
        <l id="s17:l4" met="3" type="-+">Ghy zijt mijn <rhyme label="a" type="f" corresp="#s17:l1">generacy</rhyme>,</l>
        <l id="s17:l5" met="4" type="-+">Comt drinckt nu droncken sonder <rhyme label="b" type="m" corresp="#s17:l2">maet</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

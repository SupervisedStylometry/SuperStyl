    <melody>Kommt her zu mir spricht Gottes Sohn</melody>
    <categories>
      <category translation="formal genres">formele genres</category>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Geen noodigher vindt <rhyme label="a" type="m">ghewis</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Dan die met Godt te vreden <rhyme label="a" type="m" corresp="#s1:l1">is</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Dat hy mach trou <rhyme label="b" type="f">volherden</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">En dient hem soo van herten <rhyme label="c" type="m">grondt</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">En oeffent hem in sijn <rhyme label="c" type="m" corresp="#s1:l4">verbondt</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Soo langh’ hy leeft op <rhyme label="b" type="f" corresp="#s1:l3">erden</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Recht daer nae u hert’ en <rhyme label="a" type="m">ghemoet</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Dinckt hoe Godt met sijn hulpe <rhyme label="a" type="m" corresp="#s2:l1">goet</rhyme></l>
        <l id="s2:l3" met="3" type="-+">V heeft gaen <rhyme label="b" type="f">openbaren</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Den claren schijn, sijn heylich <rhyme label="c" type="m">woort</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">Doe ghy tot Babel laecht <rhyme label="c" type="m" corresp="#s2:l4">versmoort</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Verblindt, hoort dit <rhyme label="b" type="f" corresp="#s2:l3">verclaren</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Druck over druck was voor de <rhyme label="a" type="m">handt</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Te blijven  in het woeste <rhyme label="a" type="m" corresp="#s3:l1">landt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Maer hy quam u te <rhyme label="b" type="f">baten</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Die den sijnen altijdt <rhyme label="c" type="m">bystaet</rhyme></l>
        <l id="s3:l5" met="4" type="-+">In aller noot. hoe dat het <rhyme label="c" type="m" corresp="#s3:l4">gaet</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">En heeft u niet <rhyme label="b" type="f" corresp="#s3:l3">verlaten</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ydel en ledich over <rhyme label="a" type="m">al</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Hebt ghy ghestaen int jammer <rhyme label="a" type="m" corresp="#s4:l1">dal</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Voorwaer tot elcker <rhyme label="b" type="f">stonden</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Mismaeckt van zonden groot en <rhyme label="c" type="m">cleyn</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Daer in Adams kinder <rhyme label="c" type="m" corresp="#s4:l4">ghemeyn</rhyme></l>
        <l id="s4:l6" met="3" type="-+">T’samen worden <rhyme label="b" type="f" corresp="#s4:l3">bevonden</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ende u brocht tot hier toe <rhyme label="a" type="m">voort</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Wiesch u door’t Waterdal int <rhyme label="a" type="m" corresp="#s5:l1">woort</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Met sijnen roeden <rhyme label="b" type="f">bloede</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Cocht hy u uyt s’vyandts <rhyme label="c" type="m">ghewelt</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Heeft u nu in sijn huys <rhyme label="c" type="m" corresp="#s5:l4">ghestelt</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Houdt over u nu <rhyme label="b" type="f" corresp="#s5:l3">hoede</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Beelden noch offerhanden <rhyme label="a" type="m">saet</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Nae de Wet voor de zond’ <rhyme label="a" type="m" corresp="#s6:l1">ghedaen</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Gheensins ons baet en <rhyme label="b" type="f">dede</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Christus Gods Soon aent Cruys <rhyme label="c" type="m">voorwaer</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Ghestorven met tormenten <rhyme label="c" type="m" corresp="#s6:l4">swaer</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Verwerf ons rechten <rhyme label="b" type="f" corresp="#s6:l3">vrede</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Hy en maeckte gheen <rhyme label="a" type="m">onderscheydt</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Maer neemt aen, elcken wel <rhyme label="a" type="m" corresp="#s7:l1">bereydt</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Hier toe zijt ghy <rhyme label="b" type="f">ghecomen</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Als kinder Gods uyt liefde <rhyme label="c" type="m">fijn</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Die nu met Godt vereenicht <rhyme label="c" type="m" corresp="#s7:l4">zijn</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">In sijn huys <rhyme label="b" type="f" corresp="#s7:l3">opghenomen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">By sijn tafel zijt ghy <rhyme label="a" type="m">gheset</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Daer men het broodt der Engh’len <rhyme label="a" type="m" corresp="#s8:l1">eet</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">En van het Kalf <rhyme label="b" type="f">ghesleghen</rhyme>:</l>
        <l id="s8:l4" met="4" type="-+">Daer men den nieuwen wijn nu <rhyme label="c" type="m">drinckt</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Den Christus Iesus selve <rhyme label="c" type="m" corresp="#s8:l4">schinckt</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Ghelijck de dienaers <rhyme label="b" type="f" corresp="#s8:l3">pleghen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Prijst en belijdt in sijnen <rhyme label="a" type="m">Naem</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Seght, Heere maeckt ons doch <rhyme label="a" type="m" corresp="#s9:l1">bequaem</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Gheeft ons hier te <rhyme label="b" type="f">verwinnen</rhyme>:</l>
        <l id="s9:l4" met="4" type="-+">Voor Satans list behoedt ons <rhyme label="c" type="m">doch</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Sterckt ons in uwe waerheyt <rhyme label="c" type="m" corresp="#s9:l4">noch</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Om u recht te <rhyme label="b" type="f" corresp="#s9:l3">beminnen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Iae lieve Heer, maeckt ons <rhyme label="a" type="m">perfeckt</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Ghy weet hoe veel ons noch <rhyme label="a" type="m" corresp="#s10:l1">ontbreckt</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Ons kranckheyt wilt <rhyme label="b" type="f">ghenesen</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Door uwen Soon, die ons <rhyme label="c" type="m">beriedt</rhyme>,</l>
        <l id="s10:l5" met="4" type="-+">Vwe handt stadelijck ons <rhyme label="c" type="m" corresp="#s10:l4">biedt</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Leydt ons int Hemels <rhyme label="b" type="f" corresp="#s10:l3">wesen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Niet Heer en wijckt,  maer staet ons <rhyme label="a" type="m">by</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Helpt ons door dese <rhyme label="a" type="m" corresp="#s11:l1">woesteyn</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Waer door wy moeten <rhyme label="b" type="f">treden</rhyme></l>
        <l id="s11:l4" met="4" type="-+">Als  Pelgrims, dennen <rhyme label="c" type="m">verlanght</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Tot dat ghy ons haest eens <rhyme label="c" type="m" corresp="#s11:l4">ontfanght</rhyme></l>
        <l id="s11:l6" met="3" type="-+">In u ruste met <rhyme label="b" type="f" corresp="#s11:l3">vreden</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Christe, aen u houden wy <rhyme label="a" type="m">vast</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Ghy Soon Gods, die ons hebt <rhyme label="a" type="m" corresp="#s12:l1">ontlast</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">En van zonden <rhyme label="b" type="f">ontladen</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Ter rechter handt ws Vaders <rhyme label="c" type="m">wijt</rhyme>,</l>
        <l id="s12:l5" met="4" type="-+">Aldaer ghy ons versoender <rhyme label="c" type="m" corresp="#s12:l4">zijt</rhyme>,</l>
        <l id="s12:l6" met="3" type="-+">Wilt ons voortaen <rhyme label="b" type="f" corresp="#s12:l3">beraden</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Keert u ghenade <rhyme label="a" type="m">nemmermeer</rhyme></l>
        <l id="s13:l2" met="4" type="-+">Van ons, want wy zijn swack en <rhyme label="a" type="m" corresp="#s13:l1">teer</rhyme>,</l>
        <l id="s13:l3" met="3" type="-+">In u handt staet ons <rhyme label="b" type="f">machte</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Wilt ghy (O lieve Heer) ghy <rhyme label="c" type="m">meucht</rhyme></l>
        <l id="s13:l5" met="4" type="-+">Ons herte stueren tot der <rhyme label="c" type="m" corresp="#s13:l4">deucht</rhyme>,</l>
        <l id="s13:l6" met="3" type="-+">Door uwe stercke <rhyme label="b" type="f" corresp="#s13:l3">crachte</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

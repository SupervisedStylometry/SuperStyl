  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">EEn lief heb ik <rhyme label="a" type="f">verkooren</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">De schoonste, die daar <rhyme label="b" type="m">leefd</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Rijk, eedel, <rhyme label="a" type="f" corresp="#s1:l1">hoog-gebooren</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Wijs, deugdig, zeer <rhyme label="b" type="m" corresp="#s1:l2">beleefd</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Mijn lief, zoo <rhyme label="c" type="f">over-schoone</rhyme>,</l>
        <l id="s1:l6" met="2" type="+-">Is Gods <rhyme label="c" type="f" corresp="#s1:l5">Zoone</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Mijn lief heeft my <rhyme label="a" type="f">gevonden</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Als ik verlooren <rhyme label="b" type="m">was</rhyme>.</l>
        <l id="s2:l3" met="3" type="-+">Ik lag heel dood vol <rhyme label="a" type="f" corresp="#s2:l1">wonden</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Mijn lief quam wel te <rhyme label="b" type="m" corresp="#s2:l2">pas</rhyme>;</l>
        <l id="s2:l5" met="3" type="-+">Om door zijn dood en <rhyme label="c" type="f">lijen</rhyme></l>
        <l id="s2:l6" met="2" type="+-">My te <rhyme label="c" type="f" corresp="#s2:l5">vrijen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Door Hem ben ik <rhyme label="a" type="f">verreezen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Uit den vervloekten <rhyme label="b" type="m">dood</rhyme>.</l>
        <l id="s3:l3" met="3" type="-+">Ik ben geheel <rhyme label="a" type="f" corresp="#s3:l1">geneezen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Gered uit alle <rhyme label="b" type="m" corresp="#s3:l2">nood</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">En tot zijn lief <rhyme label="c" type="f">verkooren</rhyme>,</l>
        <l id="s3:l6" met="2" type="+-">En <rhyme label="c" type="f" corresp="#s3:l5">her-booren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Soud ik hem niet <rhyme label="a" type="f">beminnen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Die my eerst heeft <rhyme label="b" type="m">bemind</rhyme>?</l>
        <l id="s4:l3" met="3" type="-+">Hy trekt tot hem mijn <rhyme label="a" type="f" corresp="#s4:l1">zinnen</rhyme>;</l>
        <l id="s4:l4" met="3" type="-+">Dus mijn ziel vreede <rhyme label="b" type="m" corresp="#s4:l2">vind</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Lof Iesus Heer, mijn <rhyme label="c" type="f">schoone</rhyme>,</l>
        <l id="s4:l6" met="2" type="+-">Goodes <rhyme label="c" type="f" corresp="#s4:l5">Zoone</rhyme>!</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Mijn hert, in liefd <rhyme label="a" type="f">ontsteeken</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Leid sta'ig als in een <rhyme label="b" type="m">brand</rhyme>;</l>
        <l id="s5:l3" met="3" type="-+">Die van veel <rhyme label="a" type="f" corresp="#s5:l1">waater-beeken</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Vergeefs werd <rhyme label="b" type="m" corresp="#s5:l2">aan-gerand</rhyme>:</l>
        <l id="s5:l5" met="3" type="-+">'t Vuur heeft der <rhyme label="c" type="f">waater-stroomen</rhyme></l>
        <l id="s5:l6" met="2" type="+-">Kragt <rhyme label="c" type="f" corresp="#s5:l5">benoomen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Laat vry de Satan <rhyme label="a" type="f">woeden</rhyme></l>
        <l id="s6:l2" met="3" type="-+">De Weereld hel en <rhyme label="b" type="m">dood</rhyme>;</l>
        <l id="s6:l3" met="3" type="-+">Mijn lief kan my <rhyme label="a" type="f" corresp="#s6:l1">behoeden</rhyme></l>
        <l id="s6:l4" met="3" type="-+">En redden uit den <rhyme label="b" type="m" corresp="#s6:l2">nood</rhyme>.</l>
        <l id="s6:l5" met="3" type="-+">Hy slaat my al-tijd <rhyme label="c" type="f">gaade</rhyme></l>
        <l id="s6:l6" met="2" type="+-">Met <rhyme label="c" type="f" corresp="#s6:l5">genaade</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Hy geeft my wat te <rhyme label="a" type="f">smaaken</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Van 's Heemels <rhyme label="b" type="m">zoetigheid</rhyme>;</l>
        <l id="s7:l3" met="3" type="-+">Daar-om wil ik <rhyme label="a" type="f" corresp="#s7:l1">verzaaken</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Des Weerlds <rhyme label="b" type="m" corresp="#s7:l2">ydelheid</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Met vreugd het quaade <rhyme label="c" type="f">mijden</rhyme></l>
        <l id="s7:l6" met="2" type="+-">t' Allen <rhyme label="c" type="f" corresp="#s7:l5">tijden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Geen ding kan my <rhyme label="a" type="f">vernoegen</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Als deez' mijn waarde <rhyme label="b" type="m">vriend</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Die gunstig gaat <rhyme label="a" type="f" corresp="#s8:l1">toe-voegen</rhyme></l>
        <l id="s8:l4" met="3" type="-+">'t Geen my ten besten <rhyme label="b" type="m" corresp="#s8:l2">diend</rhyme>.</l>
        <l id="s8:l5" met="3" type="-+">Door Hem strekt al mijn <rhyme label="c" type="f">lijden</rhyme></l>
        <l id="s8:l6" met="2" type="+-">Tot <rhyme label="c" type="f" corresp="#s8:l5">verblijden</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Ik heb van Hem <rhyme label="a" type="f">ontfangen</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Zijn trouw tot <rhyme label="b" type="m">onder-pand</rhyme>.</l>
        <l id="s9:l3" met="3" type="-+">'k Heb naa zijn komst <rhyme label="a" type="f" corresp="#s9:l1">verlangen</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Och 't hert van liefde <rhyme label="b" type="m" corresp="#s9:l2">brand</rhyme>!</l>
        <l id="s9:l5" met="3" type="-+">Kom lief, kom haast, mijn <rhyme label="c" type="f">schoone</rhyme></l>
        <l id="s9:l6" met="2" type="+-">Goodes <rhyme label="c" type="f" corresp="#s9:l5">Zoone</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

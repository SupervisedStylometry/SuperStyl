    <melody>Tien geboden</melody>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O God en Schepper hoogh <rhyme label="a" type="f">gepresen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Een aardworm komt u spreecken <rhyme label="b" type="m">aen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Wy laet hem niet sijn af <rhyme label="a" type="f" corresp="#s1:l1">gewesen</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Maer wilt op Hem d’oogen <rhyme label="b" type="m" corresp="#s1:l2">slaen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Uw oogen die met <rhyme label="a" type="f">mededoogen</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">My sagen in mijns moeders <rhyme label="b" type="m">lijf</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Waer uyt gy my hebt <rhyme label="a" type="f" corresp="#s2:l1">uytgetogen</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">En steld’ op aerden mijn <rhyme label="b" type="m" corresp="#s2:l2">verblijf</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Met pijn en smert ben ick <rhyme label="a" type="f">geboren</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Met sorgh en kommer <rhyme label="b" type="m">op-gevoed</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Ick moest voor eeuwigh gaen <rhyme label="a" type="f" corresp="#s3:l1">verlooren</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Soo gy niet waert geweest soo <rhyme label="b" type="m" corresp="#s3:l2">goet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ick waer een brand-hout van der <rhyme label="a" type="f">hellen</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Een kind des toorens van <rhyme label="b" type="m">natuur</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Ick weet gy moght my eeuwigh <rhyme label="a" type="f" corresp="#s4:l1">quellen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">En senden naer het helsche <rhyme label="b" type="m" corresp="#s4:l2">vuur</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Maer naer uw wil en <rhyme label="a" type="f">wel-behagen</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Soo schenckt Gy my U eygen <rhyme label="b" type="m">Soon</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">In Hem ben ick uw <rhyme label="a" type="f" corresp="#s5:l1">op-gedragen</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Hy heeft voor my randsoen en <rhyme label="b" type="m" corresp="#s5:l2">loon</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Hy is mijn Heer, mijn trouwe <rhyme label="a" type="f">Borge</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Die voor mijn schulden heeft <rhyme label="b" type="m">geboet</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">En die my gansch bevrijt van <rhyme label="a" type="f" corresp="#s6:l1">sorgen</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">En af-wast in sijn suyver <rhyme label="b" type="m" corresp="#s6:l2">bloet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Of schoon doot, Hle en duyvel <rhyme label="a" type="f">bassen</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Of aerd’ en Hemel om my <rhyme label="b" type="m">beeft</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Sy konnen my doch niet <rhyme label="a" type="f" corresp="#s7:l1">verrassen</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Dewijl Hy haer verslonden <rhyme label="b" type="m" corresp="#s7:l2">heeft</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Hy is mijn Velt-heer en mijn <rhyme label="a" type="f">Koningh</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Mijn naem die staet mee op sijn <rhyme label="b" type="m">rol</rhyme>;</l>
        <l id="s8:l3" met="4" type="-+">Het Paradijs is nu sijn <rhyme label="a" type="f" corresp="#s8:l1">wooningh</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Daer alles is van vreugden <rhyme label="b" type="m" corresp="#s8:l2">vol</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Maer ick helaes! Ick ben op <rhyme label="a" type="f">aerden</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">En uyt den eersten Adam <rhyme label="b" type="m">aerts</rhyme>.</l>
        <l id="s9:l3" met="4" type="-+">Ick bid u Heer wilt my <rhyme label="a" type="f" corresp="#s9:l1">aenvaerden</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">En trecken tot u <rhyme label="b" type="m" corresp="#s9:l2">hemelwaerts</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Alwaer dat gy nu sijt <rhyme label="a" type="f">geseten</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Tot uwes Vaders <rhyme label="b" type="m">rechter-hand</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Ey wilt u schepsel niet <rhyme label="a" type="f" corresp="#s10:l1">vergeten</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Dat by u eens genade <rhyme label="b" type="m" corresp="#s10:l2">vand</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Mijn leven vloeyd gelijck de <rhyme label="a" type="f">stroomen</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Mijn dagen sijn maer roock en <rhyme label="b" type="m">wind</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Maer bloemen, schaduwen en <rhyme label="a" type="f" corresp="#s11:l1">droomen</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Die men in ’t kort niet meer en <rhyme label="b" type="m" corresp="#s11:l2">vind</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Ick moet hier swerven, loopen, <rhyme label="a" type="f">draven</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Als ballingh in dit <rhyme label="b" type="m">tranendal</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Tot dat ick eens des Hemels <rhyme label="a" type="f" corresp="#s12:l1">haven</rhyme></l>
        <l id="s12:l4" met="4" type="-+">Door uwe gunst bereycken <rhyme label="b" type="m" corresp="#s12:l2">sal</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Ons rechte Vaderlant is <rhyme label="a" type="f">boven</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Wy hebben hier geen vaste <rhyme label="b" type="m">Stad</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Op aerden schijnen wy <rhyme label="a" type="f" corresp="#s13:l1">verschoven</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Maer boven is ons hert en <rhyme label="b" type="m" corresp="#s13:l2">schadt</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Op desen wegh soo moet men <rhyme label="a" type="f">spoeyen</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">Men moet gereet staen op Godes <rhyme label="b" type="m">Woort</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">Men moet de voeten vaerdigh <rhyme label="a" type="f" corresp="#s14:l1">schroeyen</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">En sonder stil-staen altijdt <rhyme label="b" type="m" corresp="#s14:l2">voort</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Men moet niet sachjes gaen, maer <rhyme label="a" type="f">loopen</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">En strijden in dit <rhyme label="b" type="m">worstel-perck</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">Men moet de tijt sien uyt te <rhyme label="a" type="f" corresp="#s15:l1">koopen</rhyme>,</l>
        <l id="s15:l4" met="4" type="-+">En vallen daad’lijck aen het <rhyme label="b" type="m" corresp="#s15:l2">werck</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Die wegh die valt wel steyl en <rhyme label="a" type="f">enge</rhyme>,</l>
        <l id="s16:l2" met="4" type="-+">O wandelaer wie dat gy <rhyme label="b" type="m">sijt</rhyme>,</l>
        <l id="s16:l3" met="4" type="-+">Sy valt voor vleesch, en bloet wat <rhyme label="a" type="f" corresp="#s16:l1">strenge</rhyme>,</l>
        <l id="s16:l4" met="4" type="-+">En d’and’re schijnt vry breet en <rhyme label="b" type="m" corresp="#s16:l2">wijdt</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Ick bidde laet u niet <rhyme label="a" type="f">bedriegen</rhyme>,</l>
        <l id="s17:l2" met="4" type="-+">Door ’s werelts list en soet <rhyme label="b" type="m">gevley</rhyme>,</l>
        <l id="s17:l3" met="4" type="-+">De Duyvel kan niet doen dan <rhyme label="a" type="f" corresp="#s17:l1">liegen</rhyme>,</l>
        <l id="s17:l4" met="4" type="-+">Hy brenght de zielen in de <rhyme label="b" type="m" corresp="#s17:l2">ly</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Dit sijn maer listige <rhyme label="a" type="f">Sireenen</rhyme>,</l>
        <l id="s18:l2" met="4" type="-+">Stopt voor haer soet gesangh u <rhyme label="b" type="m">oor</rhyme>,</l>
        <l id="s18:l3" met="4" type="-+">Want gy soud eeeuwiglijck <rhyme label="a" type="f" corresp="#s18:l1">beweenen</rhyme>,</l>
        <l id="s18:l4" met="4" type="-+">Dat gy haer oit eens gaeft <rhyme label="b" type="m" corresp="#s18:l2">gehoor</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">Op, op mijn Ziel dan sonder <rhyme label="a" type="f">schroomen</rhyme>,</l>
        <l id="s19:l2" met="4" type="-+">En wandelt met een rappe <rhyme label="b" type="m">voet</rhyme>,</l>
        <l id="s19:l3" met="4" type="-+">Want siet de Bruydegom wil <rhyme label="a" type="f" corresp="#s19:l1">komen</rhyme>,</l>
        <l id="s19:l4" met="4" type="-+">Ey gaet Hem vaerdigh in ’t <rhyme label="b" type="m" corresp="#s19:l2">gemoet</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">U Heer die voor u heeft <rhyme label="a" type="f">geleden</rhyme>,</l>
        <l id="s20:l2" met="4" type="-+">Seght volght my met een soete <rhyme label="b" type="m">stem</rhyme>,</l>
        <l id="s20:l3" met="4" type="-+">Hy is u selfs oock <rhyme label="a" type="f" corresp="#s20:l1">voor-getreden</rhyme>,</l>
        <l id="s20:l4" met="4" type="-+">Tot in het nieuw <rhyme label="b" type="m" corresp="#s20:l2">Ierusalem</rhyme>.</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="4" type="-+">Wegh, wegh dan werelt laet my <rhyme label="a" type="f">rusten</rhyme></l>
        <l id="s21:l2" met="4" type="-+">‘K en heb aen u noch deel noch <rhyme label="b" type="m">lot</rhyme>,</l>
        <l id="s21:l3" met="4" type="-+">‘K versaeck u schijn-goet en <rhyme label="a" type="f" corresp="#s21:l1">wellusten</rhyme>,</l>
        <l id="s21:l4" met="4" type="-+">En geef my nu geheel aen <rhyme label="b" type="m" corresp="#s21:l2">Godt</rhyme>,</l>
      </lg>
      <lg id="s22" type="stanza">
        <l id="s22:l1" met="4" type="-+">Ey treckt my Heer, dan sal ick <rhyme label="a" type="f">loopen</rhyme>,</l>
        <l id="s22:l2" met="4" type="-+">Want sonder uw kan ick niet <rhyme label="b" type="m">voort</rhyme>:</l>
        <l id="s22:l3" met="4" type="-+">Vermeerdert mijn geloof en <rhyme label="a" type="f" corresp="#s22:l1">hoopen</rhyme>,</l>
        <l id="s22:l4" met="4" type="-+">U knecht die wacht maer op u <rhyme label="b" type="m" corresp="#s22:l2">Woort</rhyme>.</l>
      </lg>
      <lg id="s23" type="stanza">
        <l id="s23:l1" met="4" type="-+">Ick bid U Heere wilt mijn <rhyme label="a" type="f">geven</rhyme>,</l>
        <l id="s23:l2" met="4" type="-+">Nogh niet te weynigh noch te <rhyme label="b" type="m">veel</rhyme>,</l>
        <l id="s23:l3" met="4" type="-+">Op dat ick tot uw eer magh <rhyme label="a" type="f" corresp="#s23:l1">leven</rhyme>,</l>
        <l id="s23:l4" met="4" type="-+">Ey geeft my mijn bescheyden <rhyme label="b" type="m" corresp="#s23:l2">deel</rhyme>.</l>
      </lg>
      <lg id="s24" type="stanza">
        <l id="s24:l1" met="4" type="-+">Want op dien wegh sijn weynigh <rhyme label="a" type="f">rijcken</rhyme>,</l>
        <l id="s24:l2" met="4" type="-+">Haer goet dat is te swaeren <rhyme label="b" type="m">pack</rhyme>;</l>
        <l id="s24:l3" met="4" type="-+">Te weynigh sou mijn doen <rhyme label="a" type="f" corresp="#s24:l1">beswijcken</rhyme>,</l>
        <l id="s24:l4" met="4" type="-+">Door armoed en door <rhyme label="b" type="m" corresp="#s24:l2">ongemack</rhyme>.</l>
      </lg>
      <lg id="s25" type="stanza">
        <l id="s25:l1" met="4" type="-+">Ick wil de sorgh u dan <rhyme label="a" type="f">bevelen</rhyme>,</l>
        <l id="s25:l2" met="4" type="-+">Gy weet het Heer, gy weet het <rhyme label="b" type="m">al</rhyme>,</l>
        <l id="s25:l3" met="4" type="-+">Gy sult my alles <rhyme label="a" type="f" corresp="#s25:l1">mede-deelen</rhyme>,</l>
        <l id="s25:l4" met="4" type="-+">Als ick mijn loop vol-eynden <rhyme label="b" type="m" corresp="#s25:l2">sal</rhyme>.</l>
      </lg>
      <lg id="s26" type="stanza">
        <l id="s26:l1" met="4" type="-+">Ey leert my dogh mijn dagen <rhyme label="a" type="f">tellen</rhyme>,</l>
        <l id="s26:l2" met="4" type="-+">U Geest die leer my seecker <rhyme label="b" type="m">gaen</rhyme>,</l>
        <l id="s26:l3" met="4" type="-+">Want sonden, duyvel, doot en <rhyme label="a" type="f" corresp="#s26:l1">helle</rhyme>,</l>
        <l id="s26:l4" met="4" type="-+">Daer moet ick daag’lijckx tegen <rhyme label="b" type="m" corresp="#s26:l2">aen</rhyme>.</l>
      </lg>
      <lg id="s27" type="stanza">
        <l id="s27:l1" met="4" type="-+">Wel aen mijn siele wilt dan <rhyme label="a" type="f">loopen</rhyme>,</l>
        <l id="s27:l2" met="4" type="-+">’T is nu den aengenamen <rhyme label="b" type="m">tijt</rhyme>,</l>
        <l id="s27:l3" met="4" type="-+">De deure die staet voor u <rhyme label="a" type="f" corresp="#s27:l1">open</rhyme>,</l>
        <l id="s27:l4" met="4" type="-+">’T is nu de dagh der <rhyme label="b" type="m" corresp="#s27:l2">saligheyt</rhyme>.</l>
      </lg>
      <lg id="s28" type="stanza">
        <l id="s28:l1" met="4" type="-+">Want als uw oogen sijn <rhyme label="a" type="f">geloocken</rhyme>,</l>
        <l id="s28:l2" met="4" type="-+">En dat dit krancke aerde <rhyme label="b" type="m">vat</rhyme>,</l>
        <l id="s28:l3" met="4" type="-+">Eens door de doot sal sijn <rhyme label="a" type="f" corresp="#s28:l1">gebroocken</rhyme>,</l>
        <l id="s28:l4" met="4" type="-+">Soo komt gy noyt weer op dit <rhyme label="b" type="m" corresp="#s28:l2">pad</rhyme>.</l>
      </lg>
      <lg id="s29" type="stanza">
        <l id="s29:l1" met="4" type="-+">Ey loop mijn siel gelijck een <rhyme label="a" type="f">Hinde</rhyme>,</l>
        <l id="s29:l2" met="4" type="-+">Gelijck een Rhee of vluchtigh <rhyme label="b" type="m">Hert</rhyme>,</l>
        <l id="s29:l3" met="4" type="-+">Gewis gy sult genade <rhyme label="a" type="f" corresp="#s29:l1">vinden</rhyme>,</l>
        <l id="s29:l4" met="4" type="-+">En saligh die tot ’t end’ <rhyme label="b" type="m" corresp="#s29:l2">volhert</rhyme>.</l>
      </lg>
      <lg id="s30" type="stanza">
        <l id="s30:l1" met="4" type="-+">Want als gy sijt ten eynd <rhyme label="a" type="f">gekomen</rhyme>,</l>
        <l id="s30:l2" met="4" type="-+">Van dese baen of <rhyme label="b" type="m">worstel-perck</rhyme>,</l>
        <l id="s30:l3" met="4" type="-+">Wort gy ten Hemel <rhyme label="a" type="f" corresp="#s30:l1">op-genomen</rhyme>,</l>
        <l id="s30:l4" met="4" type="-+">En sulck een eynde kroont het <rhyme label="b" type="m" corresp="#s30:l2">werck</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

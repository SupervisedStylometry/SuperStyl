  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="5" type="-+">TOen ik genaakte o Fillis eerst uw <rhyme label="a" type="f">lippen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Was ’t of mijn vlugge Ziel, <rhyme label="b" type="m">terstont</rhyme>,</l>
        <l id="s1:l3" met="2" type="-+">Wou deur mijn <rhyme label="b" type="m" corresp="#s1:l2">mont</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">By d’ uwe <rhyme label="a" type="f" corresp="#s1:l1">slippen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="5" type="-+">O schoone Fillis uw klaer lichtende <rhyme label="a" type="f">ooghjens</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Zijn als twee Starren aan Godts <rhyme label="b" type="m">troon</rhyme>,</l>
        <l id="s2:l3" met="2" type="-+">En Venus <rhyme label="b" type="m" corresp="#s2:l2">Zoon</rhyme></l>
        <l id="s2:l4" met="2" type="-+">Twee <rhyme label="a" type="f" corresp="#s2:l1">minneboogjens</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="5" type="-+">Uw adem riekt als liefflyke <rhyme label="a" type="f">Vioolen</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">In plaats dat ik mijn heet hart <rhyme label="b" type="m">blus</rhyme>,</l>
        <l id="s3:l3" met="2" type="-+">Als ik uw <rhyme label="b" type="m" corresp="#s3:l2">kus</rhyme>;</l>
        <l id="s3:l4" met="2" type="-+">Zet ik ’t in <rhyme label="a" type="f" corresp="#s3:l1">koolen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="5" type="-+">Als gy uw keel vertuit aan uwe <rhyme label="a" type="f">snaren</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Doet gy door uwen brave <rhyme label="b" type="m">zwier</rhyme>,</l>
        <l id="s4:l3" met="2" type="-+">’t Wreest <rhyme label="b" type="m" corresp="#s4:l2">Tygerdier</rhyme>,</l>
        <l id="s4:l4" met="2" type="-+">Geheel <rhyme label="a" type="f" corresp="#s4:l1">bedaaren</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="5" type="-+">Gy zijt zoo wreet als schoon, o <rhyme label="a" type="f">Harderinne</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Ik krijg, schoon dat ik nagt en <rhyme label="b" type="m">dag</rhyme>,</l>
        <l id="s5:l3" met="2" type="-+">U smeek ach, <rhyme label="b" type="m" corresp="#s5:l2">ach</rhyme>!</l>
        <l id="s5:l4" met="2" type="-+">Geen <rhyme label="a" type="f" corresp="#s5:l1">wederminne</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="5" type="-+">Zielwaarde Fillis slaa uw starlichte <rhyme label="a" type="f">oogen</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Op hem die gy in min <rhyme label="b" type="m">verwart</rhyme>,</l>
        <l id="s6:l3" met="2" type="-+">Wort met zijn <rhyme label="b" type="m" corresp="#s6:l2">smart</rhyme>,</l>
        <l id="s6:l4" met="2" type="-+">Dog eens <rhyme label="a" type="f" corresp="#s6:l1">bewoogen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

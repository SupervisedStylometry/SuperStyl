    <melody>Schoon liefje jent zeer excellent</melody>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Wilt hooren Godts edele <rhyme label="a" type="m">Creaturen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Men sal u hier <rhyme label="b" type="f">gewagen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Van Paulus Bekeeringhheydt de <rhyme label="a" type="m" corresp="#s1:l1">Schrifture</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Hoe dat hem Christus <rhyme label="a" type="m" corresp="#s1:l1">pure</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Met hagel ende <rhyme label="a" type="m" corresp="#s1:l1">vure</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Heeft van den Peerde <rhyme label="b" type="f" corresp="#s1:l2">geslagen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">De stadt van Damasco was seer <rhyme label="a" type="m">benouwt</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Van de Heydensche <rhyme label="b" type="f">Soldaten</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Sy waren bloedtgierigh ende <rhyme label="a" type="m" corresp="#s2:l1">stout</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Maer de Christenen menigh <rhyme label="a" type="m" corresp="#s2:l1">fout</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Hebben op Godt <rhyme label="a" type="m" corresp="#s2:l1">betrouwt</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Hy en heeftse niet <rhyme label="b" type="f" corresp="#s2:l2">verlaten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Paulus hadde Segelen en Brieven <rhyme label="a" type="m">ontfaen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Om de Christenen te <rhyme label="b" type="f">vervolgen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Hy zwoer met de Heydenen als een <rhyme label="a" type="m" corresp="#s3:l1">Tijran</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">De waerheydt sou hy <rhyme label="a" type="m" corresp="#s3:l1">wederstaen</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Om de Christenen te <rhyme label="a" type="m" corresp="#s3:l1">verslaen</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Was Paulus seer <rhyme label="b" type="f" corresp="#s3:l2">verbolgen</rhyme>,</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Paulus tirannigh en seer <rhyme label="a" type="m">verwoet</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Die was te peerde <rhyme label="b" type="f">geseten</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Naer Damasco te rijden metter <rhyme label="a" type="m" corresp="#s4:l1">spoet</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Met Ruyters en knechten <rhyme label="a" type="m" corresp="#s4:l1">vroet</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Te vernielen ‘t Christen <rhyme label="a" type="m" corresp="#s4:l1">bloedt</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Dat hadt hy hem <rhyme label="b" type="f" corresp="#s4:l2">vermeten</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Als sy quamen uyt valscheyt <rhyme label="a" type="m">fier</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Dat sy Damasco <rhyme label="b" type="f">sagen</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Gingh den Hemel op met groot <rhyme label="a" type="m" corresp="#s5:l1">dangier</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Met hagel ende <rhyme label="a" type="m" corresp="#s5:l1">vier</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Heeft Christus <rhyme label="a" type="m" corresp="#s5:l1">goederier</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Paulus van ‘t peert <rhyme label="b" type="f" corresp="#s5:l2">geslagen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Een stemme quam uyt den Hemel <rhyme label="a" type="m">vry</rhyme></l>
        <l id="s6:l2" met="3" type="-+">En heeft geroepen <rhyme label="b" type="f">koene</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Sauls, Sauls, waerom vervolghdy <rhyme label="a" type="m" corresp="#s6:l1">my</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Paulus riep luyde en <rhyme label="a" type="m" corresp="#s6:l1">bly</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">O Heere, wat wilt <rhyme label="a" type="m" corresp="#s6:l1">gy</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Dat ick sal moeten <rhyme label="b" type="f" corresp="#s6:l2">doene</rhyme>?</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Christus sprack gy sult <rhyme label="a" type="m">opstaen</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Naer Damasco laet u <rhyme label="b" type="f">leyden</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Daer sult gy dat Christen Geloof <rhyme label="a" type="m" corresp="#s7:l1">ontfaen</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">V oogen sulen <rhyme label="a" type="m" corresp="#s7:l1">opgaen</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Paulus heeft alsoo <rhyme label="a" type="m" corresp="#s7:l1">gedaen</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Godts lof gingh hy <rhyme label="b" type="f" corresp="#s7:l2">verbreyden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Paulus heeft hem alsoo <rhyme label="a" type="m">bekeert</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Dat hy gingh preken en <rhyme label="b" type="f">leerde</rhyme></l>
        <l id="s8:l3" met="4" type="-+">Hy vreesde galgh vier nogh <rhyme label="a" type="m" corresp="#s8:l1">sweert</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Voor geen torment was hy <rhyme label="a" type="m" corresp="#s8:l1">vervaert</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Godts Woordt heeft hy <rhyme label="a" type="m" corresp="#s8:l1">verklaert</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Veel volckx hy doen <rhyme label="b" type="f" corresp="#s8:l2">bekeerde</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Paulus die vrocht by nachten <rhyme label="a" type="m">me</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Om zijn lichaem te <rhyme label="b" type="f">tenteren</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Daeghs gingh hy preken in dorp en <rhyme label="a" type="m" corresp="#s9:l1">ste</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Bekeerde hy volck <rhyme label="a" type="m" corresp="#s9:l1">me</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Veel mirakelen hy <rhyme label="a" type="m" corresp="#s9:l1">de</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Al door den naem des <rhyme label="b" type="f" corresp="#s9:l2">Heeren</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Te voren als Paulus was een <rhyme label="a" type="m">Tyran</rhyme></l>
        <l id="s10:l2" met="3" type="-+">By de Heydenen <rhyme label="b" type="f">snoode</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Soo wert hy gepresen voor een goedt <rhyme label="a" type="m" corresp="#s10:l1">Man</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Maer soo haest als hy <rhyme label="a" type="m" corresp="#s10:l1">begon</rhyme></l>
        <l id="s10:l5" met="3" type="-+">Godts woort te nemen <rhyme label="a" type="m" corresp="#s10:l1">aen</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">soo wonden sy hem <rhyme label="b" type="f" corresp="#s10:l2">doode</rhyme></l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Oorloof Christenen Broeders <rhyme label="a" type="m">eerbaer</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Met Paulus wilt u <rhyme label="b" type="f">bekeeren</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Al wort gy om de waerheydt <rhyme label="a" type="m" corresp="#s11:l1">klaer</rhyme></l>
        <l id="s11:l4" met="4" type="-+">Vervolght hier ende <rhyme label="a" type="m" corresp="#s11:l1">daer</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">soo sullen wy <rhyme label="a" type="m" corresp="#s11:l1">voorwaer</rhyme></l>
        <l id="s11:l6" met="3" type="-+">Met Christum <rhyme label="b" type="f" corresp="#s11:l2">triumpheren</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Hy die het blinkend <rhyme label="a" type="m">geld</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Eerst in de wereld <rhyme label="b" type="m">bragt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Kreeg teffens met <rhyme label="a" type="m" corresp="#s1:l1">geweldt</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">De wereld in zyn <rhyme label="b" type="m" corresp="#s1:l2">magt</rhyme>.</l>
        <l id="s1:l5" met="3" type="-+">Hy heeft de Min <rhyme label="c" type="m">verward</rhyme>.</l>
        <l id="s1:l6" met="3" type="-+">In strikken van rood <rhyme label="d" type="m">goud</rhyme>.</l>
        <l id="s1:l7" met="3" type="-+">Een teer beminnend <rhyme label="c" type="m" corresp="#s1:l5">hart</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Wordt met de nek <rhyme label="d" type="m" corresp="#s1:l6">aenschouwt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Een Minnaer die <rhyme label="a" type="m">ontbloot</rhyme></l>
        <l id="s2:l2" met="3" type="-+">Van Schatten, klaegt zyn <rhyme label="b" type="m">smart</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Klaegt ydel zynen <rhyme label="a" type="m" corresp="#s2:l1">noot</rhyme>.</l>
        <l id="s2:l4" met="3" type="-+">Nooit dringt hy in een <rhyme label="b" type="m" corresp="#s2:l2">hart</rhyme>.</l>
        <l id="s2:l5" met="3" type="-+">Zyn Schoone, fier van <rhyme label="c" type="m">zeên</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Veracht hem, schoon hy <rhyme label="d" type="m">klaegt</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Om dat hy aen zyn <rhyme label="c" type="m" corresp="#s2:l5">leên</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Geen goud of Zilver <rhyme label="d" type="m" corresp="#s2:l6">draegt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Doch 's werelds rykdom <rhyme label="a" type="m">geeft</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Het waer genoegen <rhyme label="b" type="m">niet</rhyme>.</l>
        <l id="s3:l3" met="3" type="-+">Een hart dat trouwheid <rhyme label="a" type="m" corresp="#s3:l1">heeft</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">U meerder wellust <rhyme label="b" type="m" corresp="#s3:l2">biedt</rhyme>.</l>
        <l id="s3:l5" met="3" type="-+">Haet Juffers, al den <rhyme label="c" type="m">schat</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Voor een oprechte <rhyme label="d" type="m">Ziel</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Die trouwheid in zich <rhyme label="c" type="m" corresp="#s3:l5">vat</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Waer aen uw Schoon <rhyme label="d" type="m" corresp="#s3:l6">beviel</rhyme>.</l>
      </lg>
    </lg>
  </text>

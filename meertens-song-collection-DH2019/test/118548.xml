    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">LOo, gy moet ook in den <rhyme label="a" type="m">rang</rhyme></l>
        <l id="s1:l2" met="2" type="+-">Van mijn <rhyme label="a" type="m" corresp="#s1:l1">Sang</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">Daar ik onse Kerspels <rhyme label="b" type="f">luiden</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Elk bysonder in haar <rhyme label="c" type="m">hoek</rhyme>,</l>
        <l id="s1:l5" met="2" type="+-">Mee <rhyme label="c" type="m" corresp="#s1:l4">besoek</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Oost, en West, en Noord, en <rhyme label="b" type="f" corresp="#s1:l3">Zuiden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Uw genegentheit tot <rhyme label="a" type="m">my</rhyme></l>
        <l id="s2:l2" met="2" type="+-">Maakt my <rhyme label="a" type="m" corresp="#s2:l1">bly</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">En ik wensch, dat gy mogt <rhyme label="b" type="f">weten</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Hoe 'k uit ware liefde <rhyme label="c" type="m">sucht</rhyme></l>
        <l id="s2:l5" met="2" type="+-">Na 't <rhyme label="c" type="m" corresp="#s2:l4">gehucht</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Daar gy zijt soo kleyn <rhyme label="b" type="f" corresp="#s2:l3">geseten</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Zijt gy klein en slecht in 't <rhyme label="a" type="m">oog</rhyme>:</l>
        <l id="s3:l2" met="2" type="+-">'k Acht u <rhyme label="a" type="m" corresp="#s3:l1">hoog</rhyme></l>
        <l id="s3:l3" met="4" type="+-">En kan my met u <rhyme label="b" type="f">vermaken</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Meer dan daar de werelt <rhyme label="c" type="m">pronkt</rhyme>,</l>
        <l id="s3:l5" met="2" type="+-">Lacht en <rhyme label="c" type="m" corresp="#s3:l4">lonkt</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Met een schijn van groote <rhyme label="b" type="f" corresp="#s3:l3">saken</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">'t Is in waarheit al maar <rhyme label="a" type="m">schijn</rhyme>,</l>
        <l id="s4:l2" met="2" type="+-">En geen <rhyme label="a" type="m" corresp="#s4:l1">zijn</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Wat sich voor doet hier <rhyme label="b" type="f">beneden</rhyme>;</l>
        <l id="s4:l4" met="4" type="+-">Een verdwijnende <rhyme label="c" type="m">vertoog</rhyme></l>
        <l id="s4:l5" met="2" type="+-">Voor ons <rhyme label="c" type="m" corresp="#s4:l4">oog</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Ydelheit der <rhyme label="b" type="f" corresp="#s4:l3">ydelheden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">'k Hebb' de wereldt als een <rhyme label="a" type="m">riet</rhyme>,</l>
        <l id="s5:l2" met="2" type="+-">Buiten <rhyme label="a" type="m" corresp="#s5:l1">iet</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Binnen niet, lang af <rhyme label="b" type="f">gekeken</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">En by al, wat metter <rhyme label="c" type="m">daat</rhyme></l>
        <l id="s5:l5" met="2" type="+-">Haast <rhyme label="c" type="m" corresp="#s5:l4">vergaat</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Door bevinding <rhyme label="b" type="f" corresp="#s5:l3">vergeleken</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Satan vind de meeste <rhyme label="a" type="m">kans</rhyme>,</l>
        <l id="s6:l2" met="2" type="+-">Daar de <rhyme label="a" type="m" corresp="#s6:l1">glans</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Van al 's werelts <rhyme label="b" type="f">Koninkrijken</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Met haar heerlikheit, soo <rhyme label="c" type="m">schoon</rhyme>,</l>
        <l id="s6:l5" met="2" type="+-">Staat ten <rhyme label="c" type="m" corresp="#s6:l4">toon</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Soo wy niet wel voor ons <rhyme label="b" type="f" corresp="#s6:l3">kijken</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Hierom heeft een Christen <rhyme label="a" type="m">winst</rhyme>,</l>
        <l id="s7:l2" met="2" type="+-">Daar hy <rhyme label="a" type="m" corresp="#s7:l1">minst</rhyme></l>
        <l id="s7:l3" met="4" type="+-">Is verlegen, hoe sijn <rhyme label="b" type="f">oogen</rhyme></l>
        <l id="s7:l4" met="4" type="+-">Van al dat bedrieglijck <rhyme label="c" type="m">mooi</rhyme></l>
        <l id="s7:l5" met="2" type="+-">En <rhyme label="c" type="m" corresp="#s7:l4">getooi</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Sullen werden <rhyme label="b" type="f" corresp="#s7:l3">afgetogen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Sie 'k somwijlen <rhyme label="a" type="m">d'ydelheen</rhyme></l>
        <l id="s8:l2" met="2" type="+-">Van de <rhyme label="a" type="m" corresp="#s8:l1">Steen</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Dan gedenk ik, sonder <rhyme label="b" type="f">jokken</rhyme>;</l>
        <l id="s8:l4" met="4" type="+-">O, die op den <rhyme label="c" type="m">Looschen-Brink</rhyme></l>
        <l id="s8:l5" met="2" type="+-">Nu weer <rhyme label="c" type="m" corresp="#s8:l4">gink</rhyme> !</l>
        <l id="s8:l6" met="4" type="+-">Daar sou sulcks my niet <rhyme label="b" type="f" corresp="#s8:l3">verlokken</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Als wy by u met <rhyme label="a" type="m">gemak</rhyme>,</l>
        <l id="s9:l2" met="2" type="+-">Onder 't <rhyme label="a" type="m" corresp="#s9:l1">dak</rhyme></l>
        <l id="s9:l3" met="4" type="+-">Van den blauwen hemel, <rhyme label="b" type="f">singen</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Datter elk van vroolik <rhyme label="c" type="m">wert</rhyme>,</l>
        <l id="s9:l5" met="2" type="+-">Daar is 't <rhyme label="c" type="m" corresp="#s9:l4">hert</rhyme></l>
        <l id="s9:l6" met="4" type="+-">In den hemel best te <rhyme label="b" type="f" corresp="#s9:l3">bringen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Hoe gelukkig waar u <rhyme label="a" type="m">stant</rhyme></l>
        <l id="s10:l2" met="2" type="+-">Dus op 't <rhyme label="a" type="m" corresp="#s10:l1">lant</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Kondt gy uw geluk recht <rhyme label="b" type="f">kennen</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">En met Godt maer <rhyme label="c" type="m">ommegaan</rhyme>,</l>
        <l id="s10:l5" met="2" type="+-">Om <rhyme label="c" type="m" corresp="#s10:l4">voortaan</rhyme></l>
        <l id="s10:l6" met="4" type="+-">Meer en meer aan hem te <rhyme label="b" type="f" corresp="#s10:l3">wennen</rhyme> !</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Jesus kennen maakt ons <rhyme label="a" type="m">rijk</rhyme>.</l>
        <l id="s11:l2" met="2" type="+-">Schaad' en <rhyme label="a" type="m" corresp="#s11:l1">slijk</rhyme></l>
        <l id="s11:l3" met="4" type="+-">Is daar alles by te <rhyme label="b" type="f">achten</rhyme>.</l>
        <l id="s11:l4" met="4" type="+-">Hier door leert gy, <rhyme label="c" type="m">allereerst</rhyme>,</l>
        <l id="s11:l5" met="2" type="+-">Elk om 't <rhyme label="c" type="m" corresp="#s11:l4">seerst</rhyme>,</l>
        <l id="s11:l6" met="4" type="+-">Na Godts Koninckrijk te <rhyme label="b" type="f" corresp="#s11:l3">trachten</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="+-">Hebt gy op geen gelt of <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s12:l2" met="2" type="+-">Hoog van <rhyme label="a" type="m" corresp="#s12:l1">moet</rhyme>,</l>
        <l id="s12:l3" met="4" type="+-">Als veel grooten, u te <rhyme label="b" type="f">roemen</rhyme>,</l>
        <l id="s12:l4" met="4" type="+-">By ootmoed'ge kennis <rhyme label="c" type="m">Godts</rhyme></l>
        <l id="s12:l5" met="2" type="+-">Is den <rhyme label="c" type="m" corresp="#s12:l4">trots</rhyme></l>
        <l id="s12:l6" met="4" type="+-">Aller rijken niet te <rhyme label="b" type="f" corresp="#s12:l3">noemen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="+-">Godt voedt elk hier met sijn <rhyme label="a" type="m">deel</rhyme>.</l>
        <l id="s13:l2" met="2" type="+-">Is 't niet <rhyme label="a" type="m" corresp="#s13:l1">veel</rhyme>,</l>
        <l id="s13:l3" met="4" type="+-">Dat hy u hier geeft ten <rhyme label="b" type="f">besten</rhyme>,</l>
        <l id="s13:l4" met="4" type="+-">Wat hebt gy, om u te <rhyme label="c" type="m">voen</rhyme>,</l>
        <l id="s13:l5" met="2" type="+-">Veel van <rhyme label="c" type="m" corresp="#s13:l4">doen</rhyme> ?</l>
        <l id="s13:l6" met="4" type="+-">Kleine Vogels, kleine <rhyme label="b" type="f" corresp="#s13:l3">nesten</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="+-">Wie Godt kent, en dient en <rhyme label="a" type="m">eert</rhyme>,</l>
        <l id="s14:l2" met="2" type="+-">Is <rhyme label="a" type="m" corresp="#s14:l1">geleert</rhyme></l>
        <l id="s14:l3" met="4" type="+-">Sich na kleine staat te <rhyme label="b" type="f">voegen</rhyme>.</l>
        <l id="s14:l4" met="4" type="+-">Godtsvrucht brengt het grootst <rhyme label="c" type="m">gewin</rhyme></l>
        <l id="s14:l5" met="2" type="+-">Voor ons <rhyme label="c" type="m" corresp="#s14:l4">in</rhyme>,</l>
        <l id="s14:l6" met="4" type="+-">Met een sonderling <rhyme label="b" type="f" corresp="#s14:l3">genoegen</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="+-">Brengt gy slechts aan uwen <rhyme label="a" type="m">oort</rhyme></l>
        <l id="s15:l2" met="2" type="+-">Vruchten <rhyme label="a" type="m" corresp="#s15:l1">voort</rhyme>,</l>
        <l id="s15:l3" met="4" type="+-">Die geloof en boet <rhyme label="b" type="f">betamen</rhyme>.</l>
        <l id="s15:l4" met="4" type="+-">Soekt, met heiligheits <rhyme label="c" type="m">cieraat</rhyme>,</l>
        <l id="s15:l5" met="2" type="+-">'t Volk van <rhyme label="c" type="m" corresp="#s15:l4">staat</rhyme></l>
        <l id="s15:l6" met="4" type="+-">Edelmoedig te <rhyme label="b" type="f" corresp="#s15:l3">beschamen</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="+-">Zijt doch nimmermeer <rhyme label="a" type="m">alsoo</rhyme></l>
        <l id="s16:l2" met="2" type="+-">Op het <rhyme label="a" type="m" corresp="#s16:l1">Loo</rhyme>,</l>
        <l id="s16:l3" met="4" type="+-">Als de dorre doode <rhyme label="b" type="f">boomen</rhyme>,</l>
        <l id="s16:l4" met="4" type="+-">Die daar op een Brink noch <rhyme label="c" type="m">staan</rhyme>,</l>
        <l id="s16:l5" met="2" type="+-">Daar <rhyme label="c" type="m" corresp="#s16:l4">voortaan</rhyme></l>
        <l id="s16:l6" met="4" type="+-">Vrucht noch bladt weer aan wil <rhyme label="b" type="f" corresp="#s16:l3">komen</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="+-">Maar zijt als een boom, <rhyme label="a" type="m">geplant</rhyme></l>
        <l id="s17:l2" met="2" type="+-">Aan de <rhyme label="a" type="m" corresp="#s17:l1">kant</rhyme></l>
        <l id="s17:l3" met="4" type="+-">Van den Berkel, daar ter <rhyme label="b" type="f">zijden</rhyme>,</l>
        <l id="s17:l4" met="4" type="+-">Die zijn vrucht, in sijn <rhyme label="c" type="m">saysoen</rhyme>,</l>
        <l id="s17:l5" met="2" type="+-">Frisch en <rhyme label="c" type="m" corresp="#s17:l4">groen</rhyme>,</l>
        <l id="s17:l6" met="4" type="+-">Voortbrengt op bequame <rhyme label="b" type="f" corresp="#s17:l3">tijden</rhyme>:</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="+-">Hebt gy in de kerk Godts <rhyme label="a" type="m">woort</rhyme></l>
        <l id="s18:l2" met="2" type="+-"><rhyme label="a" type="m" corresp="#s18:l1">Aangehoort</rhyme>,</l>
        <l id="s18:l3" met="4" type="+-">Vloeit niet door, gelijk de <rhyme label="b" type="f">sluisen</rhyme>,</l>
        <l id="s18:l4" met="4" type="+-">Die gy dan weer over <rhyme label="c" type="m">moet</rhyme>,</l>
        <l id="s18:l5" met="2" type="+-">Daar de <rhyme label="c" type="m" corresp="#s18:l4">vloet</rhyme></l>
        <l id="s18:l6" met="4" type="+-">Nu en immer door komt <rhyme label="b" type="f" corresp="#s18:l3">bruisen</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="+-">'t Geen gy hebt, dat houdt wel <rhyme label="a" type="m">vast</rhyme>.</l>
        <l id="s19:l2" met="2" type="+-">Jesus <rhyme label="a" type="m" corresp="#s19:l1">last</rhyme></l>
        <l id="s19:l3" met="4" type="+-">Is gemakkelik te <rhyme label="b" type="f">dragen</rhyme>,</l>
        <l id="s19:l4" met="4" type="+-">En sijn jock is licht en <rhyme label="c" type="m">sacht</rhyme>,</l>
        <l id="s19:l5" met="2" type="+-">Mits sijn <rhyme label="c" type="m" corresp="#s19:l4">kracht</rhyme></l>
        <l id="s19:l6" met="4" type="+-">Ons in alles selfs wil <rhyme label="b" type="f" corresp="#s19:l3">schragen</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="+-">Amen. Godt doe selve <rhyme label="a" type="m">nu</rhyme></l>
        <l id="s20:l2" met="2" type="+-">Dus aan <rhyme label="a" type="m" corresp="#s20:l1">u</rhyme>;</l>
        <l id="s20:l3" met="4" type="+-">Hy bevestig' dit <rhyme label="b" type="f">altsamen</rhyme></l>
        <l id="s20:l4" met="4" type="+-">Ja hy selve doe <rhyme label="c" type="m">alsoo</rhyme></l>
        <l id="s20:l5" met="2" type="+-">Aan het <rhyme label="c" type="m" corresp="#s20:l4">Loo</rhyme>,</l>
        <l id="s20:l6" met="4" type="+-">Als wy van hem bidden. <rhyme label="b" type="f" corresp="#s20:l3">Amen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

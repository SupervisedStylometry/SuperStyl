<song>
  <meta>
    <id>21351</id>
    <date>
      <year-start>1591</year-start>
      <year-end>1592</year-end>
    </date>
    <tags>
      <tag standard-name="schriftuurlijk lied" translation="scripture song">schriftuurlijk lied</tag>
      <tag standard-name="vermaanlied" translation="admonitory song">vermaanlied</tag>
    </tags>
    <melody>Psalm 006 Datheen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">GHenade ende <rhyme label="a" type="f">vreden</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Des Heeren gheest <rhyme label="a" type="f" corresp="#s1:l1">wijsheden</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Wenschen wy v broeder <rhyme label="b" type="m">fijn</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Met v huysvrou te <rhyme label="c" type="f">samen</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Dat ghy toch naer <rhyme label="c" type="f" corresp="#s1:l4">betamen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Ten eynde toe vroom moecht <rhyme label="b" type="m" corresp="#s1:l3">zijn</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">So ghy hebt <rhyme label="a" type="f">aengenomen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">In v ionckheyt <rhyme label="a" type="f" corresp="#s2:l1">ghecomen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Tot den gheloof <rhyme label="b" type="m">playsant</rhyme>.</l>
        <l id="s2:l4" met="3" type="-+">Wilt daer niet in <rhyme label="c" type="f">vertraghen</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Te veel na rijckdom <rhyme label="c" type="f" corresp="#s2:l4">iaghen</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Nu in v volle <rhyme label="b" type="m" corresp="#s2:l3">verstant</rhyme>,</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Het volle verstant der <rhyme label="a" type="f">menschen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Natuerlijck hert en <rhyme label="a" type="f" corresp="#s3:l1">wenschen</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Is na des werelts <rhyme label="b" type="m">schat</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Maer wie dat gelt <rhyme label="c" type="f">beminnen</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Die worden so wy <rhyme label="c" type="f" corresp="#s3:l4">vinnen</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Lacy nemmermeer gelt <rhyme label="b" type="m" corresp="#s3:l3">sadt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Rijckdom doet van Godt <rhyme label="a" type="f">trecken</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Des werelts liefde <rhyme label="a" type="f" corresp="#s4:l1">verwecken</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Immers in dusdanighen <rhyme label="b" type="m">tijt</rhyme></l>
        <l id="s4:l4" met="3" type="-+">In sonderheyt diet <rhyme label="c" type="f">ghelucken</rhyme></l>
        <l id="s4:l5" met="3" type="-+">Sorchuuldicheyt haer seer <rhyme label="c" type="f" corresp="#s4:l4">drucken</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Te deruen die <rhyme label="b" type="m" corresp="#s4:l3">profijt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Wilt int gheloof <rhyme label="a" type="f">volherden</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Want rijck willen <rhyme label="a" type="f" corresp="#s5:l1">werden</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Vallen in becoring <rhyme label="b" type="m">bloot</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Ende in vele <rhyme label="c" type="f">stricken</rhyme></l>
        <l id="s5:l5" met="3" type="-+">So datmen mach <rhyme label="c" type="f" corresp="#s5:l4">verschricken</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Des comenschaps handel <rhyme label="b" type="m" corresp="#s5:l3">groot</rhyme></l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Het prijckel der <rhyme label="a" type="f">rijckdommen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">En canmen niet wel <rhyme label="a" type="f" corresp="#s6:l1">sommen</rhyme></l>
        <l id="s6:l3" met="3" type="-+">So daer gheschreuen <rhyme label="b" type="m">staet</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Want sy vallen <rhyme label="c" type="f">ghestadelijck</rhyme></l>
        <l id="s6:l5" met="3" type="-+">In lust begeerten <rhyme label="c" type="f" corresp="#s6:l4">schadelick</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Die menschen met der <rhyme label="b" type="m" corresp="#s6:l3">daet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Versincken en <rhyme label="a" type="f">bederuen</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Verdoemenis <rhyme label="a" type="f" corresp="#s7:l1">verwerwen</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Want siet die giericheyt <rhyme label="b" type="m">is</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Die wortel so wy <rhyme label="c" type="f">lesen</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Van alle quaet hoort <rhyme label="c" type="f" corresp="#s7:l4">desen</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Dit vinden wy <rhyme label="b" type="m" corresp="#s7:l3">ghewis</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Dat haer ghelust heeft <rhyme label="a" type="f">lacy</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Onder die Christen <rhyme label="a" type="f" corresp="#s8:l1">nacy</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Sijn vant gheloof <rhyme label="b" type="m">ghedwaelt</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Neemt dit toch wel ter <rhyme label="c" type="f">herten</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Sy hebben haer in veel <rhyme label="c" type="f" corresp="#s8:l4">smarten</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Vermengt so die Schrift <rhyme label="b" type="m" corresp="#s8:l3">verhaelt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Christus spreckt wilt dit <rhyme label="a" type="f">mercken</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Wat rijckdom meer can <rhyme label="a" type="f" corresp="#s9:l1">wercken</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Rijckdom ghelijckt hy <rhyme label="b" type="m">vaet</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Voor distelen wilt <rhyme label="c" type="f">ghedencken</rhyme></l>
        <l id="s9:l5" met="3" type="-+">En doornen die daer <rhyme label="c" type="f" corresp="#s9:l4">crencken</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Och vrienden dat goede <rhyme label="b" type="m" corresp="#s9:l3">saet</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Hierom strijt als die <rhyme label="a" type="f">cloecken</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Gods rijck wilt voor al <rhyme label="a" type="f" corresp="#s10:l1">soecken</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">Met zijn <rhyme label="b" type="m">gherechticheyt</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Acht waerschouwing van <rhyme label="c" type="f">vrunden</rhyme></l>
        <l id="s10:l5" met="3" type="-+">Die v siele weluaer <rhyme label="c" type="f" corresp="#s10:l4">gunden</rhyme></l>
        <l id="s10:l6" met="3" type="-+">Dat was een goet <rhyme label="b" type="m" corresp="#s10:l3">bescheyt</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="-+">Nu laet ons wel <rhyme label="a" type="f">onthouwen</rhyme></l>
        <l id="s11:l2" met="3" type="-+">waerschouwing wel <rhyme label="a" type="f" corresp="#s11:l1">aenschouwen</rhyme></l>
        <l id="s11:l3" met="3" type="-+">Men vint wt Christus <rhyme label="b" type="m">mont</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Hoe dat een Rijckmans <rhyme label="c" type="f">acker</rhyme></l>
        <l id="s11:l5" met="3" type="-+">Veel ghewassen had vaet dit <rhyme label="c" type="f" corresp="#s11:l4">wacker</rhyme></l>
        <l id="s11:l6" met="3" type="-+">Waer op zijn hert seer <rhyme label="b" type="m" corresp="#s11:l3">stont</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="-+">Hy sprack also wy <rhyme label="a" type="f">weten</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Mijn siel wilt drincken en <rhyme label="a" type="f" corresp="#s12:l1">eeten</rhyme></l>
        <l id="s12:l3" met="3" type="-+">Veel goets had hy <rhyme label="b" type="m">vergaert</rhyme></l>
        <l id="s12:l4" met="3" type="-+">Hy leyde ouer zijn <rhyme label="c" type="f">saecken</rhyme></l>
        <l id="s12:l5" met="3" type="-+">Sijn Schuren grooter te <rhyme label="c" type="f" corresp="#s12:l4">maecken</rhyme></l>
        <l id="s12:l6" met="3" type="-+">Bly was hy <rhyme label="b" type="m" corresp="#s12:l3">onbeswaert</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="-+">Daer is een stem <rhyme label="a" type="f">ghecomen</rhyme></l>
        <l id="s13:l2" met="3" type="-+">Dat daer sou worden <rhyme label="a" type="f" corresp="#s13:l1">ghenomen</rhyme></l>
        <l id="s13:l3" met="3" type="-+">Al in die selue <rhyme label="b" type="m">nacht</rhyme></l>
        <l id="s13:l4" met="3" type="-+">Sijn siel, wat mocht goet <rhyme label="c" type="f">baten</rhyme></l>
        <l id="s13:l5" met="3" type="-+">Hy mostet al <rhyme label="c" type="f" corresp="#s13:l4">verlaten</rhyme></l>
        <l id="s13:l6" met="3" type="-+">Voort sprack Die stem dit <rhyme label="b" type="m" corresp="#s13:l3">acht</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="3" type="-+">Wie salt dan toe <rhyme label="a" type="f">behooren</rhyme></l>
        <l id="s14:l2" met="3" type="-+">Dat ghy hier hebt <rhyme label="a" type="f" corresp="#s14:l1">vercooren</rhyme></l>
        <l id="s14:l3" met="3" type="-+">Vergadert voor v <rhyme label="b" type="m">lot</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">Dus gaetet die <rhyme label="c" type="f">eenpaerlijck</rhyme></l>
        <l id="s14:l5" met="3" type="-+">Die schat vergaderen <rhyme label="c" type="f" corresp="#s14:l4">claerlijck</rhyme></l>
        <l id="s14:l6" met="3" type="-+">En zijn niet rijck in <rhyme label="b" type="m" corresp="#s14:l3">Godt</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="3" type="-+">Hoe ydel zijn die <rhyme label="a" type="f">luyden</rhyme></l>
        <l id="s15:l2" met="3" type="-+">Al die daer leuen <rhyme label="a" type="f" corresp="#s15:l1">huyden</rhyme></l>
        <l id="s15:l3" met="3" type="-+">Nu in dat aersche <rhyme label="b" type="m">dal</rhyme>,</l>
        <l id="s15:l4" met="3" type="-+">Siet te vergheest wilt <rhyme label="c" type="f">achten</rhyme></l>
        <l id="s15:l5" met="3" type="-+">Vermoeyen haer die <rhyme label="c" type="f" corresp="#s15:l4">gheslachten</rhyme></l>
        <l id="s15:l6" met="3" type="-+">Niet wetende wie noch <rhyme label="b" type="m" corresp="#s15:l3">sal</rhyme></l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="3" type="-+">In voeren of <rhyme label="a" type="f">verteren</rhyme></l>
        <l id="s16:l2" met="3" type="-+">Laet ons den Heer der <rhyme label="a" type="f" corresp="#s16:l1">heeren</rhyme></l>
        <l id="s16:l3" met="3" type="-+">Wt gantscher herten <rhyme label="b" type="m">gront</rhyme></l>
        <l id="s16:l4" met="3" type="-+">Aenbidden ende <rhyme label="c" type="f">pooghen</rhyme></l>
        <l id="s16:l5" met="3" type="-+">Dat wy hem alleen <rhyme label="c" type="f" corresp="#s16:l4">moghen</rhyme></l>
        <l id="s16:l6" met="3" type="-+">Behaghen tot alder <rhyme label="b" type="m" corresp="#s16:l3">stont</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="3" type="-+">Hout ons toch dit ten <rhyme label="a" type="f">goeden</rhyme></l>
        <l id="s17:l2" met="3" type="-+">Nu laten wy ons <rhyme label="a" type="f" corresp="#s17:l1">spoeden</rhyme></l>
        <l id="s17:l3" met="3" type="-+">Naet beste al <rhyme label="b" type="m">ghelijck</rhyme></l>
        <l id="s17:l4" met="3" type="-+">Op dat wy moghen <rhyme label="c" type="f">comen</rhyme></l>
        <l id="s17:l5" met="3" type="-+">Hier nae met alle <rhyme label="c" type="f" corresp="#s17:l4">vromen</rhyme></l>
        <l id="s17:l6" met="3" type="-+">Vrienden al in gods <rhyme label="b" type="m" corresp="#s17:l3">rijck</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

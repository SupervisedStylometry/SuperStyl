  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">Hoe verduystert, <rhyme label="a" type="f">vastgekluystert</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">Neergedrukt door ’t zonden <rhyme label="b" type="m">kwaat</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">’K zoek met kermen, u <rhyme label="c" type="f">ontfermen</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">In my zelve buyten <rhyme label="b" type="m" corresp="#s1:l2">raad</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Mogt mijn ziele, <rhyme label="a" type="f">nederknielen</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">En met diepe smert <rhyme label="b" type="m">vervuld</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Voor u buygen, en <rhyme label="c" type="f">betuygen</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Al mijn zware zonden <rhyme label="b" type="m" corresp="#s2:l2">schuld</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Gy regtvaardig, ik <rhyme label="a" type="f">onwaardig</rhyme>,</l>
        <l id="s3:l2" met="4" type="+-">Egter een vergevend <rhyme label="b" type="m">God</rhyme>,</l>
        <l id="s3:l3" met="4" type="+-">Die genade, vroeg en <rhyme label="c" type="f">spade</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Schenkt en onderhoud mijn <rhyme label="b" type="m" corresp="#s3:l2">lot</rhyme>,</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Als ik delve, in my <rhyme label="a" type="f">zelve</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">Vind ik my geheel <rhyme label="b" type="m">onreyn</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">En inwendig, gantsch <rhyme label="c" type="f">elendig</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">Rondom zondig en ik <rhyme label="b" type="m" corresp="#s4:l2">schijn</rhyme></l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Ia mijn oogen, vaak <rhyme label="a" type="f">bedrogen</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Dat ik meyne Godes <rhyme label="b" type="m">beeld</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Nog te dragen, en ik <rhyme label="c" type="f">vrage</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Hoe zoo een u ’t herte <rhyme label="b" type="m" corresp="#s5:l2">steld</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Die volzonden, schuld en <rhyme label="a" type="f">wonden</rhyme>,</l>
        <l id="s6:l2" met="4" type="+-">Gantsch verloore en <rhyme label="b" type="m">ontbloot</rhyme>,</l>
        <l id="s6:l3" met="4" type="+-">Voor zijn leeven, niets kan <rhyme label="c" type="f">geeven</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">Nog tot redding van de <rhyme label="b" type="m" corresp="#s6:l2">dood</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">Anders geene, dan <rhyme label="a" type="f">alleene</rhyme>,</l>
        <l id="s7:l2" met="4" type="+-">Hy die alles hebt <rhyme label="b" type="m">vervuld</rhyme>,</l>
        <l id="s7:l3" met="4" type="+-">Kund geneezen, en mijn <rhyme label="c" type="f">weezen</rhyme>,</l>
        <l id="s7:l4" met="4" type="+-">Tot verzoening voor mijn <rhyme label="b" type="m" corresp="#s7:l2">schuld</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Zou mijn herten, niet met <rhyme label="a" type="f">smerten</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">Treuren over ’t zonden <rhyme label="b" type="m">kwaat</rhyme>,</l>
        <l id="s8:l3" met="4" type="+-">Die de wonden, <rhyme label="c" type="f">toegezonden</rhyme>,</l>
        <l id="s8:l4" met="4" type="+-">Hebben Godes Zoon en <rhyme label="b" type="m" corresp="#s8:l2">smaat</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Kruys en banden, alle <rhyme label="a" type="f">schanden</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">Aangedaan en hels <rhyme label="b" type="m">verdriet</rhyme>,</l>
        <l id="s9:l3" met="4" type="+-">Dat hy klagen moest en <rhyme label="c" type="f">vragen</rhyme>,</l>
        <l id="s9:l4" met="4" type="+-">Waarom God hem zoo <rhyme label="b" type="m" corresp="#s9:l2">verliet</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Gun my Vader, dat ik <rhyme label="a" type="f">nader</rhyme>,</l>
        <l id="s10:l2" met="4" type="+-">Tot u throon in Iezus <rhyme label="b" type="m">bloed</rhyme>,</l>
        <l id="s10:l3" met="4" type="+-">Dat ik kome, zonder <rhyme label="c" type="f">schrome</rhyme>,</l>
        <l id="s10:l4" met="4" type="+-">Door ’t geloove om het <rhyme label="b" type="m" corresp="#s10:l2">goed</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="+-">Dat ik erven, door het <rhyme label="a" type="f">sterven</rhyme>,</l>
        <l id="s11:l2" met="4" type="+-">Van die Levens-vorst voor <rhyme label="b" type="m">my</rhyme>,</l>
        <l id="s11:l3" met="4" type="+-">Dat zijn lyden, my <rhyme label="c" type="f">verblyden</rhyme>,</l>
        <l id="s11:l4" met="4" type="+-">En zijn dood mijn leeven <rhyme label="b" type="m" corresp="#s11:l2">zy</rhyme>.</l>
      </lg>
    </lg>
  </text>

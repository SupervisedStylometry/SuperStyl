  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">VErlosser van mijn <rhyme label="a" type="f">ziele</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Nadat al uwe <rhyme label="b" type="m">le'en</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Van d'hals af, tot u <rhyme label="a" type="f" corresp="#s1:l1">hiele</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Gegeeselt zijn tot <rhyme label="b" type="m" corresp="#s1:l2">een</rhyme>;</l>
        <l id="s1:l5" met="4" type="-+">Ghy zijt ghewont, tot sterven toe <rhyme label="c" type="m">teer</rhyme>.</l>
        <l id="s1:l6" met="3" type="-+">Als Bloedt-zuygers, die <rhyme label="a" type="f" corresp="#s1:l1">fielen</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Krayen noch om meer, <rhyme label="c" type="m" corresp="#s1:l5">meer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Dees' bloet-gierige <rhyme label="a" type="f">Draken</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Als Tygers, Leeuwen <rhyme label="b" type="m">gram</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Om tot meer bloedt te <rhyme label="a" type="f" corresp="#s2:l1">raeken</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Van u onnoosel <rhyme label="b" type="m" corresp="#s2:l2">Lam</rhyme>;</l>
        <l id="s2:l5" met="4" type="-+">Van Doorens als priemen scherp, en <rhyme label="c" type="m">oudt</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Een ronde kroon sy <rhyme label="a" type="f" corresp="#s2:l1">maken</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Vol tacken <rhyme label="c" type="m" corresp="#s2:l5">menighvout</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Met stocken groot sy <rhyme label="a" type="f">parsen</rhyme></l>
        <l id="s3:l2" met="3" type="-+">De Doorens recht en <rhyme label="b" type="m">krom</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Tot in de teere <rhyme label="a" type="f" corresp="#s3:l1">harsen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Van u mijn <rhyme label="b" type="m" corresp="#s3:l2">Bruydegom</rhyme>.</l>
        <l id="s3:l5" met="4" type="-+">Dese Doorens groot al wijcken <rhyme label="c" type="m">doet</rhyme>;</l>
        <l id="s3:l6" met="3" type="-+">U pan van 't hooft moet <rhyme label="a" type="f" corresp="#s3:l1">knarsen</rhyme>;</l>
        <l id="s3:l7" met="3" type="-+">U Bloedt dat stroomt en <rhyme label="c" type="m" corresp="#s3:l5">vloet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Hoe diep de Doorens <rhyme label="a" type="f">steken</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Door 't vel, door 't vleysch in 't <rhyme label="b" type="m">breyn</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">U tonge speent van <rhyme label="a" type="f" corresp="#s4:l1">spreken</rhyme>.</l>
        <l id="s4:l4" met="3" type="-+">O Iesu! Lely <rhyme label="b" type="m" corresp="#s4:l2">reyn</rhyme>.</l>
        <l id="s4:l5" met="4" type="-+">Al ziet men u onder Doorens <rhyme label="c" type="m">staen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">In plaets van quaedt te <rhyme label="a" type="f" corresp="#s4:l1">wreken</rhyme>;</l>
        <l id="s4:l7" met="3" type="-+">Milt ziet ghy yder <rhyme label="c" type="m" corresp="#s4:l5">aen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Met 't Purper kleet uw' <rhyme label="a" type="f">leden</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Bebloedt, hebben <rhyme label="b" type="m">bedacht</rhyme>;</l>
        <l id="s5:l3" met="3" type="-+">In u handt stellen <rhyme label="a" type="f" corresp="#s5:l1">mede</rhyme></l>
        <l id="s5:l4" met="3" type="-+">'t Riet: yder met u <rhyme label="b" type="m" corresp="#s5:l2">geckt</rhyme>.</l>
        <l id="s5:l5" met="4" type="-+">Wie u bespot, wie u aenschijn <rhyme label="c" type="m">smijt</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Ghy zijt, o Heer! te <rhyme label="a" type="f" corresp="#s5:l1">vrede</rhyme>.</l>
        <l id="s5:l7" met="3" type="-+">Dit alles om my <rhyme label="c" type="m" corresp="#s5:l5">lijdt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Want door liefde <rhyme label="a" type="f">gedreven</rhyme></l>
        <l id="s6:l2" met="3" type="-+">In uw' leden, <rhyme label="b" type="m">gelijck</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Papier, hebt ghy <rhyme label="a" type="f" corresp="#s6:l1">geschreve</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Met u bloedt reyn en <rhyme label="b" type="m" corresp="#s6:l2">rijck</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">In plaets van Inckt; met riet als een <rhyme label="c" type="m">pen</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Hoe u liefde <rhyme label="a" type="f" corresp="#s6:l1">verheve</rhyme></l>
        <l id="s6:l7" met="3" type="-+">My bemint, die snoot <rhyme label="c" type="m" corresp="#s6:l5">ben</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Mijn zonden, Godes <rhyme label="a" type="f">Soone</rhyme>!</l>
        <l id="s7:l2" met="3" type="-+">Hebben Doorens <rhyme label="b" type="m">gepluckt</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">'k Maeckte hier van de <rhyme label="a" type="f" corresp="#s7:l1">kroone</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">En in u hooft <rhyme label="b" type="m" corresp="#s7:l2">ghedruckt</rhyme>.</l>
        <l id="s7:l5" met="4" type="-+">Als ick viel licht in de sonden <rhyme label="c" type="m">groot</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Ick stelde u ten <rhyme label="a" type="f" corresp="#s7:l1">toone</rhyme>;</l>
        <l id="s7:l7" met="3" type="-+">Gaf u 't kleedt puper <rhyme label="c" type="m" corresp="#s7:l5">snoot</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Met al d'oude <rhyme label="a" type="f">gezelle</rhyme></l>
        <l id="s8:l2" met="3" type="-+">'k Val Iesu, voor u <rhyme label="b" type="m">throon</rhyme>;</l>
        <l id="s8:l3" met="3" type="-+">Voor uw' ooge ick <rhyme label="a" type="f" corresp="#s8:l1">stelle</rhyme></l>
        <l id="s8:l4" met="3" type="-+">Mijn schadelijcke <rhyme label="b" type="m" corresp="#s8:l2">kroon</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Gemaeckt van mijn hayr; en 's werelts <rhyme label="c" type="m">pracht</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Hier door menighmael <rhyme label="a" type="f" corresp="#s8:l1">d'helle</rhyme></l>
        <l id="s8:l7" met="3" type="-+">'K heb verdient; u <rhyme label="c" type="m" corresp="#s8:l5">veracht</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Geeft my, Ã´ Heer der <rhyme label="a" type="f">Heeren</rhyme>!</l>
        <l id="s9:l2" met="3" type="-+">Onder uw' doorens <rhyme label="b" type="m">rust</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Met uw' Doorens <rhyme label="a" type="f" corresp="#s9:l1">af-keeren</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Wilt van my de qua <rhyme label="b" type="m" corresp="#s9:l2">lust</rhyme>.</l>
        <l id="s9:l5" met="4" type="-+">Druckt in mijn hart de pijn van u <rhyme label="c" type="m">hooft</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">Geneest hier door mijn <rhyme label="a" type="f" corresp="#s9:l1">seeren</rhyme>;</l>
        <l id="s9:l7" met="3" type="-+">Mijn klagen al <rhyme label="c" type="m" corresp="#s9:l5">uyt-dooft</rhyme>.</l>
      </lg>
    </lg>
  </text>

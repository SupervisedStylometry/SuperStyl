    <melody>Het jaar is langer dan de dag</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DIe deugd bemind, die <rhyme label="a" type="m">onder-vind</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Haar zoetheid in 't <rhyme label="b" type="f">beleeven</rhyme>;</l>
        <l id="s1:l3" met="4" type="-+">Zy kan 't gemoed in <rhyme label="c" type="m">over-vloed</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Veel troost en zoetheid <rhyme label="b" type="f" corresp="#s1:l2">geeven</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">De reine deugd, kan zulken <rhyme label="a" type="m">vreugd</rhyme></l>
        <l id="s2:l2" met="3" type="-+">In 's Menschen hert <rhyme label="b" type="f">ontsteeken</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Dat 's Weerelds zoet, als gal en <rhyme label="c" type="m">roet</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Daar by mag zijn <rhyme label="b" type="f" corresp="#s2:l2">geleeken</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Vermaak van 't vleis kan meen'gen <rhyme label="a" type="m">reis</rhyme></l>
        <l id="s3:l2" met="3" type="-+">'t Gemoed zoo angstig <rhyme label="b" type="f">quellen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Dat ziel en hert, gepijnigd <rhyme label="c" type="m">werd</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Met vreez' en angst der <rhyme label="b" type="f" corresp="#s3:l2">hellen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">En of wel schoon, die deugd haar <rhyme label="a" type="m">loon</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Voornaamentlijk zal <rhyme label="b" type="f">weezen</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Des leeven kroon, in 's Heemels <rhyme label="c" type="m">throon</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Wanneer wy zijn <rhyme label="b" type="f" corresp="#s4:l2">verreezen</rhyme>:</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Zoo kan zy hier in lijdens <rhyme label="a" type="m">vier</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">In kruis, in druk, in <rhyme label="b" type="f">strijden</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">In al 't verdriet, dat oit <rhyme label="c" type="m">geschied</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Het herte noch <rhyme label="b" type="f" corresp="#s5:l2">verblijden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Want zy gedenkt: God die <rhyme label="a" type="m">gehengt</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Die over my ten <rhyme label="b" type="f">lesten</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Hy zal hoe 't is, ik ben 't <rhyme label="c" type="m">gewis</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">My helpen noch ten <rhyme label="b" type="f" corresp="#s6:l2">lesten</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">O! die zoo leefd, dat hy God <rhyme label="a" type="m">heeft</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Tot een lief-hebbend <rhyme label="b" type="f">Vaader</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">En weet daar by, dat Hy hem <rhyme label="c" type="m">zy</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Een schut, en scherm voor <rhyme label="b" type="f" corresp="#s7:l2">quaader</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Die kan al toos 't gemoed door <rhyme label="a" type="m">troost</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Des heil'gen Geests <rhyme label="b" type="f">op-wekken</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">En denkt: hoe 't gaat, God kan al 't <rhyme label="c" type="m">quaad</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Tot heil en goed-doen <rhyme label="b" type="f" corresp="#s8:l2">strekken</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">T'Geen dat een eerlijck <rhyme label="a" type="m">man</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Belooft, dat moet hy <rhyme label="b" type="f">geven</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Hoedat ghy Iesum <rhyme label="a" type="m" corresp="#s1:l1">dan</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Die waerheyt is en <rhyme label="b" type="f" corresp="#s1:l2">leven</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Ons Christe menschen <rhyme label="c" type="f">reycken</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Dus spaede, en dus <rhyme label="d" type="m">laet</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Maer geven tot een <rhyme label="c" type="f" corresp="#s1:l5">teycken</rhyme></l>
        <l id="s1:l8" met="3" type="-+">Dat belooft is inder <rhyme label="d" type="m" corresp="#s1:l6">daet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Och neen! dus plach te <rhyme label="a" type="m">doen</rhyme></l>
        <l id="s2:l2" met="3" type="-+">In uylespiegels <rhyme label="b" type="f">tyen</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Die voor 't natuerlijck <rhyme label="a" type="m" corresp="#s2:l1">groen</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Dat blaeuwe <rhyme label="b" type="f" corresp="#s2:l2">schilderyen</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">En sey mee-vriendt <rhyme label="c" type="f">mitsdesen</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Dat u ten besten <rhyme label="d" type="m">moet</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Dit landt, dees groente <rhyme label="c" type="f" corresp="#s2:l5">wesen</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Daer ist besproocke <rhyme label="d" type="m" corresp="#s2:l6">goet</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Wat maeckje van den <rhyme label="a" type="m">Heer</rhyme></l>
        <l id="s3:l2" met="3" type="-+">O Geus, ghy schendt syn <rhyme label="b" type="f">daeden</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Ghy quest syn hoochste <rhyme label="a" type="m" corresp="#s3:l1">eer</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Ghy spot met syn <rhyme label="b" type="f" corresp="#s3:l2">genaede</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Gaet heen beraedt van <rhyme label="c" type="f">stonden</rhyme></l>
        <l id="s3:l6" met="3" type="-+">U bet op u te <rhyme label="d" type="m">guer</rhyme></l>
        <l id="s3:l7" met="3" type="-+">En wilt doch beter <rhyme label="c" type="f" corresp="#s3:l5">gronden</rhyme></l>
        <l id="s3:l8" met="3" type="-+">Op Godt, en syn <rhyme label="d" type="m" corresp="#s3:l6">Schriftuer</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ghy pocht, met 'tgeen daer <rhyme label="a" type="m">staet</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Joannes ses <rhyme label="b" type="f">geschreven</rhyme>;</l>
        <l id="s4:l3" met="3" type="-+">Het vleesch, en gaf noeyt <rhyme label="a" type="m" corresp="#s4:l1">baet</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">De geest ist, die doet <rhyme label="b" type="f" corresp="#s4:l2">leven</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Maer wie heeft dan <rhyme label="c" type="f">beneven</rhyme></l>
        <l id="s4:l6" met="3" type="-+">De doodt, de hel <rhyme label="d" type="m">vertreen</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">En 'teeuwich goet <rhyme label="c" type="f" corresp="#s4:l5">gegeven</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Als Christus vleesch <rhyme label="d" type="m" corresp="#s4:l6">alleen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Den Heer en sprack hier <rhyme label="a" type="m">van</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Syn vleesch niet wildijt <rhyme label="b" type="f">weten</rhyme>:</l>
        <l id="s5:l3" met="3" type="-+">Maer van een vleysich <rhyme label="a" type="m" corresp="#s5:l1">man</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Die Christum meynde <rhyme label="b" type="f" corresp="#s5:l2">'teeten</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Wt potten oft van <rhyme label="c" type="f">speeten</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Gelijckmen is <rhyme label="d" type="m">gewoon</rhyme></l>
        <l id="s5:l7" met="3" type="-+">Met mondt, en Tanden <rhyme label="c" type="f" corresp="#s5:l5">beten</rhyme></l>
        <l id="s5:l8" met="3" type="-+">Gebraeden, oft <rhyme label="d" type="m" corresp="#s5:l6">gesoon</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Syn woorden syn te <rhyme label="a" type="m">klaer</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Niemandt en kanse <rhyme label="b" type="f">stutten</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Syn last is <rhyme label="a" type="m" corresp="#s6:l1">openbaer</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Van vleesch en bloet te <rhyme label="b" type="f" corresp="#s6:l2">nutten</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Op peene van <rhyme label="c" type="f">verlooren</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Nu end' altijt te <rhyme label="d" type="m">gaen</rhyme></l>
        <l id="s6:l7" met="3" type="-+">Soo wie dit niet wou <rhyme label="c" type="f" corresp="#s6:l5">hooren</rhyme>,</l>
        <l id="s6:l8" met="3" type="-+">Soo wie 'tsou laeten <rhyme label="d" type="m" corresp="#s6:l6">staen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">En dit s't'gemeyne <rhyme label="a" type="m">les</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Daer mee men wel <rhyme label="b" type="f">gevaren</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Heeft vijftienhondert <rhyme label="a" type="m" corresp="#s7:l1">ses</rhyme></l>
        <l id="s7:l4" met="3" type="-+">En meer getal van <rhyme label="b" type="f" corresp="#s7:l2">jaeren</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Als blijckt wt all' de <rhyme label="c" type="f">maghtig</rhyme></l>
        <l id="s7:l6" met="3" type="-+">Outvaeders, die hier <rhyme label="d" type="m">in</rhyme></l>
        <l id="s7:l7" met="3" type="-+">Eenparich en <rhyme label="c" type="f" corresp="#s7:l5">eendrachtich</rhyme></l>
        <l id="s7:l8" met="3" type="-+">Van pen sijn, en van <rhyme label="d" type="m" corresp="#s7:l6">sin</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

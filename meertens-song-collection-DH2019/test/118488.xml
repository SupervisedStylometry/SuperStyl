    <melody>Tien geboden</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O eeuwig Godt, barmhertig <rhyme label="a" type="f">Vader</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Wy loven u uit 's herten <rhyme label="b" type="m">gront</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Dat gy ons uit soo voll' een <rhyme label="a" type="f" corresp="#s1:l1">ader</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Uw vloeijende genade <rhyme label="b" type="m" corresp="#s1:l2">jont</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Insonderheit, dat gy ons <rhyme label="a" type="f">weder</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Hebt met de spijs uws Woorts <rhyme label="b" type="m">gevoedt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Die onse zielen, swak en <rhyme label="a" type="f" corresp="#s2:l1">teder</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Versterkt en by het leven <rhyme label="b" type="m" corresp="#s2:l2">hoedt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Waar niet uw wet al ons' <rhyme label="a" type="f">verlusting</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Wy waren nu allang <rhyme label="b" type="m">vergaan</rhyme></l>
        <l id="s3:l3" met="4" type="-+">In onse druk, en al <rhyme label="a" type="f" corresp="#s3:l1">d'ontrusting</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Die daagliks ons wordt <rhyme label="b" type="m" corresp="#s3:l2">aangedaan</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Maar tegen alle ramp en <rhyme label="a" type="f">qualen</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Is 't onse vreugt, dat w' in uw <rhyme label="b" type="m">huis</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Ons' herten eens weer op gaan <rhyme label="a" type="f" corresp="#s4:l1">halen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">En lichter heen gaan met ons' <rhyme label="b" type="m" corresp="#s4:l2">kruis</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Laat in ons' herten werksaam <rhyme label="a" type="f">groeijen</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Het zaat van 't eeuwig-blijvend <rhyme label="b" type="m">woort</rhyme>.</l>
        <l id="s5:l3" met="4" type="-+">Daar helpt geen planten noch <rhyme label="a" type="f" corresp="#s5:l1">besproeijen</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Brengt gy niet selfs den wasdom <rhyme label="b" type="m" corresp="#s5:l2">voort</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Bewaar ons soo in 't waar <rhyme label="a" type="f">geloove</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Door uw onwinb're kracht <rhyme label="b" type="m">gesterkt</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Dat noit de Duivel weer en <rhyme label="a" type="f" corresp="#s6:l1">roove</rhyme></l>
        <l id="s6:l4" met="4" type="-+">'t Geen eenmaal in ons is <rhyme label="b" type="m" corresp="#s6:l2">gewerkt</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Geef dat wy ernstig daar na <rhyme label="a" type="f">pogen</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Dat wy geen hoorders slegts, maar <rhyme label="b" type="m">t'saam</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Ook daders van u woort sijn <rhyme label="a" type="f" corresp="#s7:l1">mogen</rhyme>;</l>
        <l id="s7:l4" met="4" type="-+">Dat onse hoop ons noit <rhyme label="b" type="m" corresp="#s7:l2">beschaam</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Laat onse licht door goede <rhyme label="a" type="f">werken</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Soo voor de menschen schijnen, <rhyme label="b" type="m">Heer</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Dat sy se klaarlik sien en <rhyme label="a" type="f" corresp="#s8:l1">merken</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Tot meer verbreiding van uw <rhyme label="b" type="m" corresp="#s8:l2">eer</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Maakt ons bequaam om soo <rhyme label="a" type="f">malkander</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Te stichten door 't gepredikt <rhyme label="b" type="m">Woort</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Dat d'eene noch iet leer' van <rhyme label="a" type="f" corresp="#s9:l1">d'ander</rhyme>.</l>
        <l id="s9:l4" met="4" type="-+">De lust van d'een drijf d'ander <rhyme label="b" type="m" corresp="#s9:l2">voort</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Wilt uw beloft aan ons <rhyme label="a" type="f">vervullen</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Dat, volgens uw getrouw <rhyme label="b" type="m">verbont</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Uw Geest en Woort noit wijken <rhyme label="a" type="f" corresp="#s10:l1">sullen</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Van ons en onser kind'ren <rhyme label="b" type="m" corresp="#s10:l2">mont</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Gedenk niet meer aan onse <rhyme label="a" type="f">sonde</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Maar demp ons' <rhyme label="b" type="m">ongerechtigheit</rhyme>;</l>
        <l id="s11:l3" met="4" type="-+">Werps' in een diepe zee te <rhyme label="a" type="f" corresp="#s11:l1">gronde</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Daars' eeuwig in bedolven <rhyme label="b" type="m" corresp="#s11:l2">leit</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Zijt selfs, O Godt, aan uw <rhyme label="a" type="f">Gemeente</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Gelijk een vier'ge muer <rhyme label="b" type="m">rondom</rhyme>.</l>
        <l id="s12:l3" met="4" type="-+">Bewaar en spaar al uw <rhyme label="a" type="f" corresp="#s12:l1">gebeente</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Dat geen van d'uw' oit <rhyme label="b" type="m" corresp="#s12:l2">omme-kom</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Neem boven-al in uw <rhyme label="a" type="f">geleide</rhyme></l>
        <l id="s13:l2" met="4" type="-+">Den Herder, dien gy tot ons <rhyme label="b" type="m">sendt</rhyme>.</l>
        <l id="s13:l3" met="4" type="-+">Geef, dat hy ons soo leid' en <rhyme label="a" type="f" corresp="#s13:l1">weide</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Dat elk sijn trouwheit zy <rhyme label="b" type="m" corresp="#s13:l2">bekent</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Behoud en sterk ons' <rhyme label="a" type="f">Overheden</rhyme>,</l>
        <l id="s14:l2" met="4" type="-+">Soo hoog als laag, op dat s'haar <rhyme label="b" type="m">macht</rhyme></l>
        <l id="s14:l3" met="4" type="-+">Ten dienste van uw Kerk <rhyme label="a" type="f" corresp="#s14:l1">besteden</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">En daar door by ons zijn <rhyme label="b" type="m" corresp="#s14:l2">geacht</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Wilt troosten, helpen, en <rhyme label="a" type="f">beschermen</rhyme></l>
        <l id="s15:l2" met="4" type="-+">Uw volk, dat in bedroefde <rhyme label="b" type="m">staat</rhyme></l>
        <l id="s15:l3" met="4" type="-+">U smeekt met suchten, klagen, <rhyme label="a" type="f" corresp="#s15:l1">kermen</rhyme>.</l>
        <l id="s15:l4" met="4" type="-+">Zijt der verlaat'nen <rhyme label="b" type="m" corresp="#s15:l2">toeverlaat</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Maak ons ook lijdsaam en <rhyme label="a" type="f">stantvastig</rhyme></l>
        <l id="s16:l2" met="4" type="-+">In alle tegenspoet en <rhyme label="b" type="m">ramp</rhyme>.</l>
        <l id="s16:l3" met="4" type="-+">Noit vall' ons Christus jok te <rhyme label="a" type="f" corresp="#s16:l1">lastig</rhyme>,</l>
        <l id="s16:l4" met="4" type="-+">Die eeuwig kroont na kort <rhyme label="b" type="m" corresp="#s16:l2">gekamp</rhyme>.</l>
      </lg>
    </lg>
  </text>

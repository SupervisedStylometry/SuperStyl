  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Komt Nimphjes komt vald wakker <rhyme label="a" type="m">an</rhyme></l>
        <l id="s1:l2" met="4" type="-+">En vlegt een Krans van <rhyme label="b" type="f">Lauwerieren</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">En wild daar mee de Hoofden <rhyme label="a" type="m" corresp="#s1:l1">van</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Dit zoet gezegend Paar <rhyme label="b" type="f" corresp="#s1:l2">vercieren</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Die t’zaam getreden zijn in <rhyme label="a" type="m">d’Egt</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">En door de Trouwe vast <rhyme label="b" type="f">gebonden</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Ziet hoe ons Bruydegom te <rhyme label="a" type="m" corresp="#s2:l1">regt</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Zijn alderliefste heeft <rhyme label="b" type="f" corresp="#s2:l2">gevonden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Een waardig pand een hoogen <rhyme label="a" type="m">schat</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Van Godt tot u vermaak <rhyme label="b" type="f">gebooren</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">’t Geen nauwelijks verstand <rhyme label="a" type="m" corresp="#s3:l1">omvat</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Onder veel duysend <rhyme label="b" type="f" corresp="#s3:l2">uytverkooren</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Een Vrouw een Vrouw tot uwer <rhyme label="a" type="m">lust</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Een Weder-pand zeer hoog van <rhyme label="b" type="f">waarden</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Waar mee gy op ’t Houw’lijk tot u <rhyme label="a" type="m" corresp="#s4:l1">rust</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Door Liefd’ en Trouwe komt <rhyme label="b" type="f" corresp="#s4:l2">aanvaarden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">U tweede Ziel, u eenig <rhyme label="a" type="m">Lot</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Daar gy voortaan by hoopte <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Die van den Heer uwen <rhyme label="a" type="m" corresp="#s5:l1">Godt</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Tot uwen troost u is <rhyme label="b" type="f" corresp="#s5:l2">gegeven</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Gelijk Christus het Hoofd zeer <rhyme label="a" type="m">goed</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Van zijn Gemeente is <rhyme label="b" type="f">geprezen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Weer Bruydegom dat gy zo <rhyme label="a" type="m" corresp="#s6:l1">moet</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Het Hoofd van uwen Vrouw <rhyme label="b" type="f" corresp="#s6:l2">weten</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Regeerd haar met een goed <rhyme label="a" type="m">verstand</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Zijt altoos vreedzaam met haar <rhyme label="b" type="f">gaande</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Weet dat daarom den <rhyme label="a" type="m" corresp="#s7:l1">Egten-band</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Uyt Liefde en Trouwe is <rhyme label="b" type="f" corresp="#s7:l2">bestaande</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Vrouw Bruyd agt u Man lief en <rhyme label="a" type="m">waard</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Wild hem noyt kwade woorden <rhyme label="b" type="f">geven</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Denkt dat gy daarom zijt <rhyme label="a" type="m" corresp="#s8:l1">gepaard</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Om vreedzaamlijk met hem te <rhyme label="b" type="f" corresp="#s8:l2">leven</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Noemt u Man Heer gelijk <rhyme label="a" type="m">Sara</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Regeert u Huys-gezin in <rhyme label="b" type="f">orden</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Want zo gy haar hier in volgt <rhyme label="a" type="m" corresp="#s9:l1">na</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Zo zijt gy haar Dogter <rhyme label="b" type="f" corresp="#s9:l2">geworden</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">In Godes Leer altijd <rhyme label="a" type="m">volherd</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Laat u doen eerbaar zijn <rhyme label="b" type="f">begonnen</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">Want door der Vrouwen kuysheyd <rhyme label="a" type="m" corresp="#s10:l1">werd</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Ook dikwils menig Man <rhyme label="b" type="f" corresp="#s10:l2">gewonnen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Treft t’zaam gelijk als <rhyme label="a" type="m">Ennias</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Die zijn Vrouw drie-en-veertig <rhyme label="b" type="f">Iaaren</rhyme></l>
        <l id="s11:l3" met="4" type="-+">Gehad heeft zonder dat hy <rhyme label="a" type="m" corresp="#s11:l1">was</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Of dat zy beyde twistig <rhyme label="b" type="f" corresp="#s11:l2">waaren</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">En krijgt gy kinderen van den <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Zo wildze na Godtds <rhyme label="b" type="f">wel-behagen</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Op-voeden in zijn Heyl’ge <rhyme label="a" type="m" corresp="#s12:l1">Leer</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Dat gy van haar ziet goede <rhyme label="b" type="f" corresp="#s12:l2">dagen</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Dit wenschen wy u <rhyme label="a" type="m">allegaar</rhyme>,</l>
        <l id="s13:l2" met="4" type="-+">Dat Godes gunst en grooten <rhyme label="b" type="f">Zegen</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">In overvloed van Iaar tot <rhyme label="a" type="m" corresp="#s13:l1">Iaar</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Op u daal als een vrugtbaar <rhyme label="b" type="f" corresp="#s13:l2">Regen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

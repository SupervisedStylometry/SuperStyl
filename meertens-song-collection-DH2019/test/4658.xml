    <tags/>
    <melody>Grâce au bon petit Jésus</melody>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">TEn zy ghy waerde vruchten <rhyme label="a" type="m">doet</rhyme></l>
        <l id="s1:l2" met="2" type="-+">Van scharpe <rhyme label="a" type="m" corresp="#s1:l1">boet</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Zoo zuldy all’ ge-lijk <rhyme label="b" type="m">vergaen</rhyme>,</l>
        <l id="s1:l4" met="2" type="-+">Neemt dan deez’ <rhyme label="c" type="f">oorde</rhyme></l>
        <l id="s1:l5" met="2" type="-+">Wt Christus <rhyme label="c" type="f" corresp="#s1:l4">woorden</rhyme></l>
        <l id="s1:l6" met="2" type="-+">Met reden <rhyme label="b" type="m" corresp="#s1:l3">aen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Och of noch uir, noch dag, noch <rhyme label="a" type="m">iaer</rhyme></l>
        <l id="s2:l2" met="2" type="-+">Geweest en <rhyme label="a" type="m" corresp="#s2:l1">waer</rhyme>;</l>
        <l id="s2:l3" met="4" type="-+">Dat ik met werk, gedacht oft <rhyme label="b" type="m">woord</rhyme>,</l>
        <l id="s2:l4" met="2" type="-+">Oyt op der <rhyme label="c" type="f">Aerde</rhyme></l>
        <l id="s2:l5" met="2" type="-+">De hoge <rhyme label="c" type="f" corresp="#s2:l4">waerde</rhyme></l>
        <l id="s2:l6" met="2" type="-+">Goods had <rhyme label="b" type="m" corresp="#s2:l3">verstoordt</rhyme>!</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Daer werde toch noyt quaed zoo <rhyme label="a" type="m">vals</rhyme></l>
        <l id="s3:l2" met="2" type="-+">Gevonden, <rhyme label="a" type="m" corresp="#s3:l1">als</rhyme></l>
        <l id="s3:l3" met="4" type="-+">De zonde; daer d’onvroede <rhyme label="b" type="m">zot</rhyme></l>
        <l id="s3:l4" met="2" type="-+">Mee derf <rhyme label="c" type="f">besmetten</rhyme></l>
        <l id="s3:l5" met="2" type="-+">De reinen <rhyme label="c" type="f" corresp="#s3:l4">wetten</rhyme></l>
        <l id="s3:l6" met="2" type="-+">Van zijnen <rhyme label="b" type="m" corresp="#s3:l3">God</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">De zonde tergt, de zonde <rhyme label="a" type="m">kreit</rhyme></l>
        <l id="s4:l2" met="2" type="-+">Een <rhyme label="a" type="m" corresp="#s4:l1">Majesteit</rhyme></l>
        <l id="s4:l3" met="4" type="-+">Van grootte zonder eynd oft <rhyme label="b" type="m">maet</rhyme>.</l>
        <l id="s4:l4" met="2" type="-+">Zoo dat mids <rhyme label="c" type="f">dezen</rhyme></l>
        <l id="s4:l5" met="2" type="-+">De zond moet <rhyme label="c" type="f" corresp="#s4:l4">wezen</rhyme></l>
        <l id="s4:l6" met="2" type="-+">Oneindig <rhyme label="b" type="m" corresp="#s4:l3">quaed</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">En ’t blijkt wel aen het dier <rhyme label="a" type="m">rançoen</rhyme>,</l>
        <l id="s5:l2" met="2" type="-+">’t Welk ons van <rhyme label="a" type="m" corresp="#s5:l1">doen</rhyme></l>
        <l id="s5:l3" met="4" type="-+">Was van des Heeren eigen <rhyme label="b" type="m">boed</rhyme>;</l>
        <l id="s5:l4" met="2" type="-+">Deur zoo veel <rhyme label="c" type="f">wonden</rhyme>;</l>
        <l id="s5:l5" met="2" type="-+">Eer dat de <rhyme label="c" type="f" corresp="#s5:l4">zonde</rhyme></l>
        <l id="s5:l6" met="2" type="-+">Kon sijn <rhyme label="b" type="m" corresp="#s5:l3">vergoed</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">O diere prijs! o grote <rhyme label="a" type="m">schrik</rhyme>!</l>
        <l id="s6:l2" met="2" type="-+">Daer over <rhyme label="a" type="m" corresp="#s6:l1">ik</rhyme></l>
        <l id="s6:l3" met="4" type="-+">Met recht verfoey, met reden <rhyme label="b" type="m">haet</rhyme></l>
        <l id="s6:l4" met="2" type="-+"><rhyme label="c" type="f">d’Onthebb’lijkheden</rhyme>,</l>
        <l id="s6:l5" met="2" type="-+">Van mijn <rhyme label="c" type="f" corresp="#s6:l4">voorleden</rhyme></l>
        <l id="s6:l6" met="2" type="-+">Bedreven <rhyme label="b" type="m" corresp="#s6:l3">quaed</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Mijn ziel bedrouft is totter <rhyme label="a" type="m">dood</rhyme>,</l>
        <l id="s7:l2" met="2" type="-+">Dat ik de <rhyme label="a" type="m" corresp="#s7:l1">nood</rhyme></l>
        <l id="s7:l3" met="4" type="-+">Veroorzaekt heb van Godes <rhyme label="b" type="m">zoon</rhyme>.</l>
        <l id="s7:l4" met="2" type="-+">Daes ik hier <rhyme label="c" type="f">neder</rhyme></l>
        <l id="s7:l5" met="2" type="-+">Van moede <rhyme label="c" type="f" corresp="#s7:l4">teder</rhyme></l>
        <l id="s7:l6" met="2" type="-+">Val voor zijn <rhyme label="b" type="m" corresp="#s7:l3">kroon</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Wee my, o Heer! dat ik uw’ <rhyme label="a" type="m">wet</rhyme></l>
        <l id="s8:l2" met="2" type="-+">Oit heb <rhyme label="a" type="m" corresp="#s8:l1">besmet</rhyme>.</l>
        <l id="s8:l3" met="4" type="-+">’t Is my zoo leyd; en ben <rhyme label="b" type="m">bereyd</rhyme></l>
        <l id="s8:l4" met="2" type="-+">Met <rhyme label="c" type="f">trane-plassen</rhyme>,</l>
        <l id="s8:l5" met="2" type="-+">Weer uit te <rhyme label="c" type="f" corresp="#s8:l4">wasssen</rhyme></l>
        <l id="s8:l6" met="2" type="-+">’t Onwaerdig <rhyme label="b" type="m" corresp="#s8:l3">feyt</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Des neem ik voor, van nu <rhyme label="a" type="m">voordaen</rhyme></l>
        <l id="s9:l2" met="2" type="-+">Te blijven <rhyme label="a" type="m" corresp="#s9:l1">gaen</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Door’t voetpad van uw’ heilig <rhyme label="b" type="m">kruis</rhyme>.</l>
        <l id="s9:l4" met="2" type="-+">Tot dat ik <rhyme label="c" type="f">rusten</rhyme></l>
        <l id="s9:l5" met="2" type="-+">Kom inde <rhyme label="c" type="f" corresp="#s9:l4">kusten</rhyme></l>
        <l id="s9:l6" met="2" type="-+">Vws Vaders <rhyme label="b" type="m" corresp="#s9:l3">huis</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

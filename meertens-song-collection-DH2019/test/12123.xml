    <melody>Aanhoor gij maagden rein</melody>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">VVIlt v met my <rhyme label="a" type="f">bekeeren</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Wereltsche dienaers <rhyme label="b" type="m">koen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Tot Godt den Heer der <rhyme label="a" type="f" corresp="#s1:l1">Heeren</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Soo ick begheer te <rhyme label="b" type="m" corresp="#s1:l2">doen</rhyme>:</l>
        <l id="s1:l5" met="3" type="-+">Al ben ick ionck en <rhyme label="b" type="m" corresp="#s1:l2">groen</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Met veel sonden <rhyme label="c" type="f">beladen</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Nochtans wil ick my <rhyme label="b" type="m" corresp="#s1:l2">spoen</rhyme></l>
        <l id="s1:l8" met="3" type="-+">De wereldt te <rhyme label="c" type="f" corresp="#s1:l6">versmaden</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Als ick socht ‘swerelts <rhyme label="a" type="f">weelde</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En haer ghenoechten <rhyme label="b" type="m">kleyn</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Ick dansten en ick <rhyme label="a" type="f" corresp="#s2:l1">speelde</rhyme></l>
        <l id="s2:l4" met="3" type="-+">In ydelheyt <rhyme label="b" type="m" corresp="#s2:l2">onreyn</rhyme>:</l>
        <l id="s2:l5" met="3" type="-+">Ick wandelde <rhyme label="b" type="m" corresp="#s2:l2">ghemeyn</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Al in haer breede <rhyme label="c" type="f">paden</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Maer nu wil ick <rhyme label="b" type="m" corresp="#s2:l2">certeyn</rhyme></l>
        <l id="s2:l8" met="3" type="-+">De wereldt gansch <rhyme label="c" type="f" corresp="#s2:l6">versmaden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Hooueerdich ick <rhyme label="a" type="f">vercierde</rhyme></l>
        <l id="s3:l2" met="3" type="-+">Mijn lichaem <rhyme label="b" type="m">delicaet</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Mer all’ <rhyme label="a" type="f" corresp="#s3:l1">onghemanierde</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Daer was ick vroech en <rhyme label="b" type="m" corresp="#s3:l2">laet</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">Tot alle sonden <rhyme label="b" type="m" corresp="#s3:l2">quaet</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Werd’ ick als dan <rhyme label="c" type="f">gheraden</rhyme>:</l>
        <l id="s3:l7" met="3" type="-+">Nu will’ ick metter <rhyme label="b" type="m" corresp="#s3:l2">daet</rhyme></l>
        <l id="s3:l8" met="3" type="-+">De werelt gansch <rhyme label="c" type="f" corresp="#s3:l6">versmaden</rhyme>:</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Als ick soo <rhyme label="a" type="f">triumpheerde</rhyme></l>
        <l id="s4:l2" met="3" type="-+">In alle <rhyme label="b" type="m">ydelheyt</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">De werelt my <rhyme label="a" type="f" corresp="#s4:l1">laudeerde</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Mijn eere werdt <rhyme label="b" type="m" corresp="#s4:l2">verbreyt</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">Aldus werd’ ick <rhyme label="b" type="m" corresp="#s4:l2">verleyt</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Door haer soete <rhyme label="c" type="f">succaden</rhyme>:</l>
        <l id="s4:l7" met="3" type="-+">Maer nu ben ick <rhyme label="b" type="m" corresp="#s4:l2">bereydt</rhyme></l>
        <l id="s4:l8" met="3" type="-+">De werelt te <rhyme label="c" type="f" corresp="#s4:l6">versmaden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Ghedient heb ick mijn <rhyme label="a" type="f">daghen</rhyme></l>
        <l id="s5:l2" met="3" type="-+">De werelt seer <rhyme label="b" type="m">onvroet</rhyme>:</l>
        <l id="s5:l3" met="3" type="-+">Dat mach ick wel <rhyme label="a" type="f" corresp="#s5:l1">beklaghen</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Beweenen met <rhyme label="b" type="m" corresp="#s5:l2">ootmoet</rhyme>:</l>
        <l id="s5:l5" met="3" type="-+">En penitency <rhyme label="b" type="m" corresp="#s5:l2">goet</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Doen voor al mijn <rhyme label="c" type="f">misdaden</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">En deur Godts graci’ <rhyme label="b" type="m" corresp="#s5:l2">soet</rhyme></l>
        <l id="s5:l8" met="3" type="-+">De wereldt gansch <rhyme label="c" type="f" corresp="#s5:l6">versmaden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Ick will’ my gaen <rhyme label="a" type="f">begheuen</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Tot alle deuchden <rhyme label="b" type="m">klaer</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Veranderen mijn <rhyme label="a" type="f" corresp="#s6:l1">leuen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Ghestichtich en <rhyme label="b" type="m" corresp="#s6:l2">eerbaer</rhyme>:</l>
        <l id="s6:l5" met="3" type="-+">Heer wilt my helpen <rhyme label="b" type="m" corresp="#s6:l2">daer</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Al tot der deuchden <rhyme label="c" type="f">graden</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Want ick wil nu <rhyme label="b" type="m" corresp="#s6:l2">voorwaer</rhyme></l>
        <l id="s6:l8" met="3" type="-+">De werelt gansch <rhyme label="c" type="f" corresp="#s6:l6">versmaden</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Den Prins’ ick wil <rhyme label="a" type="f">versaken</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Van deser werelt <rhyme label="b" type="m">ront</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Want hy moet eeuwich <rhyme label="a" type="f" corresp="#s7:l1">blaken</rhyme></l>
        <l id="s7:l4" met="3" type="-+">In der hellen <rhyme label="b" type="m" corresp="#s7:l2">af-gront</rhyme>:</l>
        <l id="s7:l5" met="3" type="-+">Met Godt maeck’ ick <rhyme label="b" type="m" corresp="#s7:l2">verbont</rhyme></l>
        <l id="s7:l6" met="3" type="-+">(Die mijn siel’ kan <rhyme label="c" type="f">versaden</rhyme>)</l>
        <l id="s7:l7" met="3" type="-+">Als dat ick nu <rhyme label="b" type="m" corresp="#s7:l2">terstont</rhyme></l>
        <l id="s7:l8" met="3" type="-+">De werelt sal <rhyme label="c" type="f" corresp="#s7:l6">versmaden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Syon ghy Bruyt des Heeren <rhyme label="a" type="m">reyn</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Seer heerlijck hoogh <rhyme label="b" type="f">verheven</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Ghy Christen hoopken hier seer <rhyme label="a" type="m" corresp="#s1:l1">kleyn</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Ghy die u hebt <rhyme label="b" type="f" corresp="#s1:l2">begheven</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Onder de kleyn verachte <rhyme label="c" type="m">Schaer</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Die Godt heyligh heeft tot een <rhyme label="c" type="m" corresp="#s1:l5">Vaer</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Wilt nae sijn wille <rhyme label="b" type="f" corresp="#s1:l2">leven</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ghy Bruyt Christi laer meerd’ren <rhyme label="a" type="m">ras</rhyme></l>
        <l id="s2:l2" met="3" type="-+">De liefd’ en ‘t gheloof <rhyme label="b" type="f">mede</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">In deughden soo neemt u <rhyme label="a" type="m" corresp="#s2:l1">ghewas</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">En in <rhyme label="b" type="f" corresp="#s2:l2">gherechtighede</rhyme>,</l>
        <l id="s2:l5" met="4" type="-+">U met de werelt niet <rhyme label="c" type="m">bevleckt</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Weest Heyligh, reyn ende <rhyme label="c" type="m" corresp="#s2:l5">perfeckt</rhyme></l>
        <l id="s2:l7" met="3" type="-+">Soo blijft ghy in Gods <rhyme label="b" type="f" corresp="#s2:l2">vrede</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Christi stemme wilt nemen <rhyme label="a" type="m">waer</rhyme></l>
        <l id="s3:l2" met="3" type="-+">U Bruydegom en <rhyme label="b" type="f">Heere</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Wilt volghen sijnen wille <rhyme label="a" type="m" corresp="#s3:l1">naer</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Als sijn ledekens <rhyme label="b" type="f" corresp="#s3:l2">teere</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Hy is dat hooft, heyligh en <rhyme label="c" type="m">reen</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Van al gheloovighe <rhyme label="c" type="m" corresp="#s3:l5">ghemeen</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Dus doet nae sijne <rhyme label="b" type="f" corresp="#s3:l2">leere</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ghy schaepkens Christi in dit <rhyme label="a" type="m">pleyn</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Siet op u Herder <rhyme label="b" type="f">goede</rhyme>:</l>
        <l id="s4:l3" met="4" type="-+">Om u te verlossen <rhyme label="a" type="m" corresp="#s4:l1">ghemeyn</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Storten hy sijnen <rhyme label="b" type="f" corresp="#s4:l2">bloede</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Hoort sijn stem, ende daer nae <rhyme label="c" type="m">doet</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Des vleesch raet wilt vlieden <rhyme label="c" type="m" corresp="#s4:l5">onsoet</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Soo blijft ghy in sijn <rhyme label="b" type="f" corresp="#s4:l2">hoede</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ghy BroedersChristi <rhyme label="a" type="m">al-te-saem</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Ende sijn Susters <rhyme label="b" type="f">alle</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Die ghenoemt zijt nae Christi <rhyme label="a" type="m" corresp="#s5:l1">naem</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Hoopken kleyn van <rhyme label="b" type="f" corresp="#s5:l2">ghetalle</rhyme>,</l>
        <l id="s5:l5" met="4" type="-+">Bewijst dat ghy deelachtigh <rhyme label="c" type="m">zijt</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Den gheest Christi <rhyme label="c" type="m" corresp="#s5:l5">ghebenedijt</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Blijft op den wegh seer <rhyme label="b" type="f" corresp="#s5:l2">smalle</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Ghy knechten Christi al <rhyme label="a" type="m">ghelijck</rhyme></l>
        <l id="s6:l2" met="3" type="-+">Dient uwen Heere <rhyme label="b" type="f">reene</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Hy wert seer arm als hy was <rhyme label="a" type="m" corresp="#s6:l1">rijck</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Om onsent wil <rhyme label="b" type="f" corresp="#s6:l2">ghemeene</rhyme>:</l>
        <l id="s6:l5" met="4" type="-+">Strijt voor dijn Heere Christo <rhyme label="c" type="m">soet</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Aensiet noch leven, goet noch <rhyme label="c" type="m" corresp="#s6:l5">bloet</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Noch tijtelijck <rhyme label="b" type="f" corresp="#s6:l2">ghewene</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Gy kind’ren Gods, dijns Vaders <rhyme label="a" type="m">stem</rhyme></l>
        <l id="s7:l2" met="3" type="-+">Wilt hooren en <rhyme label="b" type="f">bewaren</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Hout sijn ghebodt, wilt volghen <rhyme label="a" type="m" corresp="#s7:l1">hem</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Wilt sijn aert <rhyme label="b" type="f" corresp="#s7:l2">openbaren</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Laet blijcken de Godlijck’ <rhyme label="c" type="m">natuyr</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">En dijn gheboort’ uyt Godt seer <rhyme label="c" type="m" corresp="#s7:l5">puyr</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Wilt Godes eer <rhyme label="b" type="f" corresp="#s7:l2">verklaren</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Ghy Borghers van <rhyme label="a" type="m">Ierusalem</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Wilt houden Godes <rhyme label="b" type="f">wetten</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">Hy is u Godt wilt vresen <rhyme label="a" type="m" corresp="#s8:l1">hem</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Op sijnen wil wilt <rhyme label="b" type="f" corresp="#s8:l2">letten</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Sijn ordeninghen houdet <rhyme label="c" type="m">vast</rhyme>,</l>
        <l id="s8:l6" met="4" type="-+">Sijn jock is soet, licht is sijn <rhyme label="c" type="m" corresp="#s8:l5">last</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Wilt u hoop op hem <rhyme label="b" type="f" corresp="#s8:l2">setten</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Ghy alle die ghedoopet <rhyme label="a" type="m">zijt</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Met den vyer en den <rhyme label="b" type="f">gheeste</rhyme>:</l>
        <l id="s9:l3" met="4" type="-+">Van Godes naem wilt doen <rhyme label="a" type="m" corresp="#s9:l1">belijt</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Met deughden minst en <rhyme label="b" type="f" corresp="#s9:l2">meeste</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Dat Christus in u leeft seer <rhyme label="c" type="m">fris</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Dat ‘t vleesch in u ghestorven <rhyme label="c" type="m" corresp="#s9:l5">is</rhyme>:</l>
        <l id="s9:l7" met="3" type="-+">Bewijst in dit <rhyme label="b" type="f" corresp="#s9:l2">foreeste</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Ghy alle die met Godt seer <rhyme label="a" type="m">goet</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Met herten vast <rhyme label="b" type="f">ootmoedigh</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">U hebt verbonden wijs en <rhyme label="a" type="m" corresp="#s10:l1">vroet</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Om hem te dienen <rhyme label="b" type="f" corresp="#s10:l2">spoedigh</rhyme>:</l>
        <l id="s10:l5" met="4" type="-+">Die nae Christi woort en <rhyme label="c" type="m">bevel</rhyme>,</l>
        <l id="s10:l6" met="4" type="-+">Zijt ghedoopet nae sijn <rhyme label="c" type="m" corresp="#s10:l5">instel</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Neemt waer uwen roep <rhyme label="b" type="f" corresp="#s10:l2">goedigh</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Ghy Stadt des Heeren die hoogh <rhyme label="a" type="m">leyt</rhyme></l>
        <l id="s11:l2" met="3" type="-+">Op Syons Bergh seer <rhyme label="b" type="f">schoone</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Den Heere uwen Godt <rhyme label="a" type="m" corresp="#s11:l1">verbeyt</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Hy komt met sijnen <rhyme label="b" type="f" corresp="#s11:l2">Soone</rhyme>:</l>
        <l id="s11:l5" met="4" type="-+">Laet dijne wercken heyligh <rhyme label="c" type="m">al</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">Blinckende onder ‘s werelts <rhyme label="c" type="m" corresp="#s11:l5">ghetal</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">Soo krijght ghy ‘s levens <rhyme label="b" type="f" corresp="#s11:l2">Kroone</rhyme></l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Neemt acht op uwe namen, <rhyme label="a" type="m">ghy</rhyme></l>
        <l id="s12:l2" met="3" type="-+">Gezeghende des <rhyme label="b" type="f">Heeren</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Godts uyt-verkoren gheslacht <rhyme label="a" type="m" corresp="#s12:l1">vry</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Sijn Priesterdom vol <rhyme label="b" type="f" corresp="#s12:l2">eeren</rhyme>,</l>
        <l id="s12:l5" met="4" type="-+">Sijn heyligh volck en <rhyme label="c" type="m">eyghendom</rhyme>,</l>
        <l id="s12:l6" met="4" type="-+">Noemt u de Heer met hooghen <rhyme label="c" type="m" corresp="#s12:l5">rom</rhyme>,</l>
        <l id="s12:l7" met="3" type="-+">Wilt sijnen lof <rhyme label="b" type="f" corresp="#s12:l2">vermeeren</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Vreset den Heere dijnen <rhyme label="a" type="m">Godt</rhyme>,</l>
        <l id="s13:l2" met="3" type="-+">Wilt sijn deughden <rhyme label="b" type="f">vertellen</rhyme>,</l>
        <l id="s13:l3" met="4" type="-+">Doet sijnen wil, houdt sijn <rhyme label="a" type="m" corresp="#s13:l1">ghebodt</rhyme>,</l>
        <l id="s13:l4" met="3" type="-+">Wilt u met hem <rhyme label="b" type="f" corresp="#s13:l2">versellen</rhyme>,</l>
        <l id="s13:l5" met="4" type="-+">Weest heyligh, en een licht seer <rhyme label="c" type="m">klaer</rhyme>,</l>
        <l id="s13:l6" met="4" type="-+">Laet deught schijnen in ‘t <rhyme label="c" type="m" corresp="#s13:l5">openbaer</rhyme>,</l>
        <l id="s13:l7" met="3" type="-+">Wilt u tot ‘t goede <rhyme label="b" type="f" corresp="#s13:l2">stellen</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Draeght u in alle <rhyme label="a" type="m">nederigheyt</rhyme>,</l>
        <l id="s14:l2" met="3" type="-+">Wilt ootmoedigh vast <rhyme label="b" type="f">beminnen</rhyme>,</l>
        <l id="s14:l3" met="4" type="-+">U Lichamen hier toch <rhyme label="a" type="m" corresp="#s14:l1">bereyt</rhyme></l>
        <l id="s14:l4" met="3" type="-+">Nae ned’righeyts <rhyme label="b" type="f" corresp="#s14:l2">versinnen</rhyme>,</l>
        <l id="s14:l5" met="4" type="-+">Schout alle pracht en <rhyme label="c" type="m">pronckery</rhyme>,</l>
        <l id="s14:l6" met="4" type="-+">Maeckt u van ‘s werelts wesen <rhyme label="c" type="m" corresp="#s14:l5">vry</rhyme>,</l>
        <l id="s14:l7" met="3" type="-+">Gheen ydelheyt <rhyme label="b" type="f" corresp="#s14:l2">beginnen</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">Weest vriendelijck tot aller <rhyme label="a" type="m">tijt</rhyme>,</l>
        <l id="s15:l2" met="3" type="-+">Laet vrede by u <rhyme label="b" type="f">bloeyen</rhyme>,</l>
        <l id="s15:l3" met="4" type="-+">Barmhertigheyt sonder <rhyme label="a" type="m" corresp="#s15:l1">respijt</rhyme>,</l>
        <l id="s15:l4" met="3" type="-+">En trou laet by u <rhyme label="b" type="f" corresp="#s15:l2">groeyen</rhyme>,</l>
        <l id="s15:l5" met="4" type="-+">Vergheeft malkand’ren de <rhyme label="c" type="m">misdaet</rhyme>,</l>
        <l id="s15:l6" met="4" type="-+">Van achterklap, van nijt en <rhyme label="c" type="m" corresp="#s15:l5">haet</rhyme></l>
        <l id="s15:l7" met="3" type="-+">Wilt uwe weghen <rhyme label="b" type="f" corresp="#s15:l2">snoeyen</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Laet blijcken reyne liefde <rhyme label="a" type="m">wel</rhyme>,</l>
        <l id="s16:l2" met="3" type="-+">Wilt malkand’ren niet <rhyme label="b" type="f">rechten</rhyme></l>
        <l id="s16:l3" met="4" type="-+">Biddet Godt voor den swacken <rhyme label="a" type="m" corresp="#s16:l1">snel</rhyme>,</l>
        <l id="s16:l4" met="3" type="-+">Draeght u als Christi <rhyme label="b" type="f" corresp="#s16:l2">knechten</rhyme>,</l>
        <l id="s16:l5" met="4" type="-+">Breeckt d’een den anderen in <rhyme label="c" type="m">Broot</rhyme>,</l>
        <l id="s16:l6" met="4" type="-+">Den krancken helpt in alle <rhyme label="c" type="m" corresp="#s16:l5">noot</rhyme>,</l>
        <l id="s16:l7" met="3" type="-+">Den rijcken met den <rhyme label="b" type="f" corresp="#s16:l2">slechten</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">Hoet u altijt voor valsche <rhyme label="a" type="m">leer</rhyme>,</l>
        <l id="s17:l2" met="3" type="-+">Weest niet kloeck in u <rhyme label="b" type="f">ooghen</rhyme>,</l>
        <l id="s17:l3" met="4" type="-+">De waerheyt verlaet <rhyme label="a" type="m" corresp="#s17:l1">nimmermeer</rhyme>,</l>
        <l id="s17:l4" met="3" type="-+">So sal u Godt <rhyme label="b" type="f" corresp="#s17:l2">verhooghen</rhyme>:</l>
        <l id="s17:l5" met="4" type="-+">Vliet de stemme des huyrlincks <rhyme label="c" type="m">quaet</rhyme>:</l>
        <l id="s17:l6" met="4" type="-+">Christum u Herder recht nae <rhyme label="c" type="m" corresp="#s17:l5">gaet</rhyme>,</l>
        <l id="s17:l7" met="3" type="-+">Wilt tot desen wegh <rhyme label="b" type="f" corresp="#s17:l2">pooghen</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Den nieuwen Mensch wilt trecken <rhyme label="a" type="m">aen</rhyme></l>
        <l id="s18:l2" met="3" type="-+">Doodet u aerdsche <rhyme label="b" type="f">leven</rhyme>:</l>
        <l id="s18:l3" met="4" type="-+">In alle druck wilt blijven <rhyme label="a" type="m" corresp="#s18:l1">staen</rhyme>,</l>
        <l id="s18:l4" met="3" type="-+">Wijckt niet van Gods <rhyme label="b" type="f" corresp="#s18:l2">waerheden</rhyme>,</l>
        <l id="s18:l5" met="4" type="-+">Weest altijt nae des Heeren <rhyme label="c" type="m">wil</rhyme>,</l>
        <l id="s18:l6" met="4" type="-+">Laet Godt Wercken, en weest ghy <rhyme label="c" type="m" corresp="#s18:l5">stil</rhyme></l>
        <l id="s18:l7" met="3" type="-+">So blijft u ziel in <rhyme label="b" type="f" corresp="#s18:l2">vreden</rhyme></l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">In alle druck ende <rhyme label="a" type="m">droefheyt</rhyme></l>
        <l id="s19:l2" met="3" type="-+">So wilt u aen Godt <rhyme label="b" type="f">houwen</rhyme>,</l>
        <l id="s19:l3" met="4" type="-+">Blijft hem ghetrou in anghst en <rhyme label="a" type="m" corresp="#s19:l1">leyt</rhyme></l>
        <l id="s19:l4" met="3" type="-+">‘t En sal u niet <rhyme label="b" type="f" corresp="#s19:l2">berouwen</rhyme>,</l>
        <l id="s19:l5" met="4" type="-+">Hy is de Heer, de stercke <rhyme label="c" type="m">Godt</rhyme>,</l>
        <l id="s19:l6" met="4" type="-+">Onsen steen, borght ende <rhyme label="c" type="m" corresp="#s19:l5">slot</rhyme>,</l>
        <l id="s19:l7" met="3" type="-+">Wilt vast op hem <rhyme label="b" type="f" corresp="#s19:l2">betrouwen</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">Ghedenkt malkand’ren in ‘t <rhyme label="a" type="m">ghebedt</rhyme>,</l>
        <l id="s20:l2" met="3" type="-+">Wandelt in Christi <rhyme label="b" type="f">paden</rhyme>,</l>
        <l id="s20:l3" met="4" type="-+">Siet op sijn woort, en daer op <rhyme label="a" type="m" corresp="#s20:l1">let</rhyme>,</l>
        <l id="s20:l4" met="3" type="-+">Laet u van Gods Geest <rhyme label="b" type="f" corresp="#s20:l2">raden</rhyme>,</l>
        <l id="s20:l5" met="4" type="-+">Blijft in Christo ghewortelt <rhyme label="c" type="m">vast</rhyme>,</l>
        <l id="s20:l6" met="4" type="-+">Draeght hier ghewilligh <rhyme label="c" type="m" corresp="#s20:l5">sijnenlast</rhyme>,</l>
        <l id="s20:l7" met="3" type="-+">Soo blijft ghy in <rhyme label="b" type="f" corresp="#s20:l2">ghenaden</rhyme>.</l>
      </lg>
    </lg>
  </text>

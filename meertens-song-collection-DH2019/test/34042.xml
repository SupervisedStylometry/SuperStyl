  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">NAe dat Godt uyt <rhyme label="a" type="m">Egipten-landt</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">De Kinders van Israël hadde <rhyme label="b" type="m">gebroght</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">En haer verlost uyt Pharo's <rhyme label="a" type="m" corresp="#s1:l1">handt</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Waer onder s' als slaven langh hadden <rhyme label="b" type="m" corresp="#s1:l2">gewroght</rhyme>;</l>
        <l id="s1:l5" met="4" type="-+">Toen sy reysden door de <rhyme label="c" type="f">Woestijnen</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Quam in het vuer, met geluydt van <rhyme label="d" type="m">Trompet</rhyme>,</l>
        <l id="s1:l7" met="4" type="-+">Godt op den Berghe van Sina <rhyme label="c" type="f" corresp="#s1:l5">verschijnen</rhyme>,</l>
        <l id="s1:l8" met="4" type="-+">Geeven aen Moyses de Heylige <rhyme label="d" type="m" corresp="#s1:l6">Wet</rhyme>,</l>
        <l id="s1:l9" met="3" type="-+">Op twee Tafels van <rhyme label="e" type="m">steen</rhyme>,</l>
        <l id="s1:l10" met="3" type="-+">Waerom sy in 't <rhyme label="e" type="m" corresp="#s1:l9">gemeen</rhyme></l>
        <l id="s1:l11" met="4" type="+-">Vierden met vreught, na Goodes <rhyme label="f" type="m">gebiet</rhyme>,</l>
        <l id="s1:l12" met="4" type="-+">Den vijfighsten dagh, waer op dit is <rhyme label="f" type="m" corresp="#s1:l11">geschiet</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Dogh dees Wet die leerden <rhyme label="a" type="m">haer</rhyme></l>
        <l id="s2:l2" met="4" type="-+">De sonden wel kennen; maer hulpe haer <rhyme label="b" type="m">niet</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Sy gaf geen kraght, dus was se <rhyme label="a" type="m" corresp="#s2:l1">swaer</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Voor meenige menschen soo was se <rhyme label="b" type="m" corresp="#s2:l2">verdriet</rhyme>:</l>
        <l id="s2:l5" met="4" type="-+">Maer nae dat Godt wilde <rhyme label="c" type="f">betoone</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Sijne genade aen 't <rhyme label="d" type="m">menschen-geslaght</rhyme>,</l>
        <l id="s2:l7" met="4" type="-+">Geevende hae sijnen eenigen <rhyme label="c" type="f" corresp="#s2:l5">Soone</rhyme>,</l>
        <l id="s2:l8" met="4" type="-+">Heeft haer door hem weer in vryheydt <rhyme label="d" type="m" corresp="#s2:l6">gebraght</rhyme>,</l>
        <l id="s2:l9" met="3" type="-+">Op eene Paeschens <rhyme label="e" type="m">Feest</rhyme>;</l>
        <l id="s2:l10" met="3" type="-+">Maer nu sendt hy sijn <rhyme label="e" type="m" corresp="#s2:l9">Geest</rhyme>,</l>
        <l id="s2:l11" met="4" type="+-">Die door sijn kraght ons harten <rhyme label="f" type="m">versterkt</rhyme>,</l>
        <l id="s2:l12" met="4" type="-+">En deughden van binnen seer wonderlijk <rhyme label="f" type="m" corresp="#s2:l11">werkt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Wanneer den dagh van <rhyme label="a" type="m">Pinxteren</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Was loopende, ende nogh alle te <rhyme label="b" type="m">mael</rhyme></l>
        <l id="s3:l3" met="4" type="-+">Ons lieven Heers <rhyme label="a" type="m" corresp="#s3:l1">Discipulen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Verlangende waren by een in een <rhyme label="b" type="m" corresp="#s3:l2">Sael</rhyme>,</l>
        <l id="s3:l5" met="4" type="-+">Volgens haer liefs Meesters <rhyme label="c" type="f">begeere</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Sit gy-lie binnen de Stat <rhyme label="d" type="m">onbevreest</rhyme>,</l>
        <l id="s3:l7" met="4" type="-+">Waghtende dat ik u-lieden <rhyme label="c" type="f" corresp="#s3:l5">vereere</rhyme>,</l>
        <l id="s3:l8" met="4" type="-+">Met den Vertrooster den Heyligen <rhyme label="d" type="m" corresp="#s3:l6">Geest</rhyme>,</l>
        <l id="s3:l9" met="3" type="-+">Die dan u-lieden <rhyme label="e" type="m">al</rhyme>,</l>
        <l id="s3:l10" met="3" type="-+">De waerheyt leeren <rhyme label="e" type="m" corresp="#s3:l9">sal</rhyme>,</l>
        <l id="s3:l11" met="4" type="+-">Hy sal u blijven eeuwelijk <rhyme label="f" type="m">by</rhyme>,</l>
        <l id="s3:l12" met="4" type="-+">Om u te vertroosten tot alle <rhyme label="f" type="m" corresp="#s3:l11">gety</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Heel onversiens is daer <rhyme label="a" type="m">geweest</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Een kraghtigh geluydt, en vervulde de <rhyme label="b" type="m">steed'</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Dus daelden neer den Heyl'gen <rhyme label="a" type="m" corresp="#s4:l1">Geest</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">En vuerige tongen verscheenen daer <rhyme label="b" type="m" corresp="#s4:l2">meed'</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Elk een boven 't hooft die daer <rhyme label="c" type="f">waren</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">En sy sijn alle vervult met den <rhyme label="d" type="m">Geest</rhyme>,</l>
        <l id="s4:l7" met="4" type="-+">Spraken ook alle de Taelen <rhyme label="c" type="f" corresp="#s4:l5">ervaren</rhyme>,</l>
        <l id="s4:l8" met="4" type="-+">Of sy geleert daer in hadden <rhyme label="d" type="m" corresp="#s4:l6">geweest</rhyme>,</l>
        <l id="s4:l9" met="3" type="-+">Dus waren met der <rhyme label="e" type="m">haest</rhyme></l>
        <l id="s4:l10" met="3" type="-+">De menschen seer <rhyme label="e" type="m" corresp="#s4:l9">verbaest</rhyme>,</l>
        <l id="s4:l11" met="4" type="+-">Sommigen ook die spotten der <rhyme label="f" type="m">mee'</rhyme>,</l>
        <l id="s4:l12" met="4" type="-+">En seyden, hoe dronken siet sijn dees al <rhyme label="f" type="m" corresp="#s4:l11">ree'</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Maer Petrus, als het hooft van <rhyme label="a" type="m">al</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Die spreekt deese lieden seer wijsselijk <rhyme label="b" type="m">an</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Hoort Borgers, wat ik seggen <rhyme label="a" type="m" corresp="#s5:l1">sal</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Beschonken en isser hier niet eenen <rhyme label="b" type="m" corresp="#s5:l2">man</rhyme>:</l>
        <l id="s5:l5" met="4" type="-+">'t Is gepropheteert langh te <rhyme label="c" type="f">vooren</rhyme>,</l>
        <l id="s5:l6" met="4" type="-+">Door den Propheete Joël van dien <rhyme label="d" type="m">tijt</rhyme>,</l>
        <l id="s5:l7" met="4" type="-+">Godt sal uytstorten, op sijne <rhyme label="c" type="f" corresp="#s5:l5">verkooren</rhyme>,</l>
        <l id="s5:l8" met="4" type="-+">d' Heyligen Geeste; daerom sijt <rhyme label="d" type="m" corresp="#s5:l6">verblijt</rhyme>,</l>
        <l id="s5:l9" met="3" type="-+">Den Geest der <rhyme label="e" type="m">prophety</rhyme></l>
        <l id="s5:l10" met="3" type="-+">Die komt u Kinders <rhyme label="e" type="m" corresp="#s5:l9">by</rhyme>,</l>
        <l id="s5:l11" met="4" type="+-">Wondere dingen sullen <rhyme label="f" type="m">geschien</rhyme>,</l>
        <l id="s5:l12" met="4" type="-+">Men sal veel mirakels en teykenen <rhyme label="f" type="m" corresp="#s5:l11">sien</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Door dees en ander woorden <rhyme label="a" type="m">meer</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Die d' Heyligen Geeste door Petrus mont <rhyme label="b" type="m">sprak</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Quam der drie duysent tot <rhyme label="a" type="m" corresp="#s6:l1">bekeer</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Die werden geloovigh, men doopten haer <rhyme label="b" type="m" corresp="#s6:l2">strak</rhyme>,</l>
        <l id="s6:l5" met="4" type="-+">En sy bleeven alle <rhyme label="c" type="f">geduerigh</rhyme></l>
        <l id="s6:l6" met="4" type="-+">In 't onderwijs der Apostolen <rhyme label="d" type="m">Goods</rhyme>,</l>
        <l id="s6:l7" met="4" type="-+">Oeffenden haer in gebeeden seer <rhyme label="c" type="f" corresp="#s6:l5">vuerigh</rhyme>,</l>
        <l id="s6:l8" met="4" type="-+">In de Communi, in 't breeken des <rhyme label="d" type="m" corresp="#s6:l6">Broods</rhyme>,</l>
        <l id="s6:l9" met="3" type="-+">En aelmis <rhyme label="e" type="m">overvloet</rhyme></l>
        <l id="s6:l10" met="3" type="-+">Sy deylden van haer <rhyme label="e" type="m" corresp="#s6:l9">goet</rhyme>,</l>
        <l id="s6:l11" met="4" type="+-">Loovende Godt, die nae sijn <rhyme label="f" type="m">behaegh</rhyme></l>
        <l id="s6:l12" met="4" type="-+">Vermeerden 't getalle van dage te <rhyme label="f" type="m" corresp="#s6:l11">daegh</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

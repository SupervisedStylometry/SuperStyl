<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>186873</id>
    <date>
      <year-start>1781</year-start>
      <year-end>1781</year-end>
    </date>
    <tags/>
    <melody>De Savoyaardse meisjes</melody>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">Moet thans de Vreede <rhyme label="a" type="f">wyken</rhyme>.</l>
        <l id="s1:l2" met="3" type="-+">Het is der Britten <rhyme label="b" type="m">schuld</rhyme>;</l>
        <l id="s1:l3" met="3" type="-+">Wy gaven duizend <rhyme label="a" type="f" corresp="#s1:l1">blyken</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Van Vriendschap en <rhyme label="b" type="m" corresp="#s1:l2">geduld</rhyme>;</l>
        <l id="s1:l5" met="3" type="-+">Doch wyl men ons durft <rhyme label="c" type="f">vergen</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Tot vegten, roept 's Lands <rhyme label="d" type="m">eer</rhyme>:</l>
        <l id="s1:l7" met="3" type="-+">‘Laat u niet langer <rhyme label="c" type="f" corresp="#s1:l5">tergen</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Maar gaan den Brit te <rhyme label="d" type="m" corresp="#s1:l6">keer</rhyme>?’</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Hy noemt de braave <rhyme label="a" type="f">Vaders</rhyme>!</l>
        <l id="s2:l2" met="3" type="-+">Van Amsterdam uit <rhyme label="b" type="m">haat</rhyme></l>
        <l id="s2:l3" met="3" type="-+">En jalousy, <rhyme label="a" type="f" corresp="#s2:l1">Verraders</rhyme>!</l>
        <l id="s2:l4" met="3" type="-+">Wie Droes verdraagt dien <rhyme label="b" type="m" corresp="#s2:l2">smaad</rhyme>!</l>
        <l id="s2:l5" met="3" type="-+">Wy zullen 't hem <rhyme label="c" type="f">verleeren</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">En toonen door 't <rhyme label="d" type="m">Geschut</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Dat zy, die ons <rhyme label="c" type="f" corresp="#s2:l5">regeeren</rhyme>,</l>
        <l id="s2:l8" met="3" type="-+">Zyn Land en Stad ten <rhyme label="d" type="m" corresp="#s2:l6">stut</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Had Neêrlands eertyds <rhyme label="a" type="f">Helden</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Die vol van vuur en <rhyme label="b" type="m">moed</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Hun trotsheid paalen <rhyme label="a" type="f" corresp="#s3:l1">stelden</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Wy geven ook ons <rhyme label="b" type="m" corresp="#s3:l2">bloed</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Voor 't Vaderland ten <rhyme label="c" type="f">besten</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Alwaar 't de nood <rhyme label="d" type="m">gebiedt</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">En tellen deeze <rhyme label="c" type="f" corresp="#s3:l5">pesten</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">Die Vreêverbrekers <rhyme label="d" type="m" corresp="#s3:l6">niet</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Zy zyn alreeds <rhyme label="a" type="f">vergeeten</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Wat Held de Ruyter <rhyme label="b" type="m">deed</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Wy zullen 't hen doen <rhyme label="a" type="f" corresp="#s4:l1">weeten</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Hat zy hun lief of <rhyme label="b" type="m" corresp="#s4:l2">leed</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Door 't dondren der <rhyme label="c" type="f">Canonnen</rhyme>;</l>
        <l id="s4:l6" met="3" type="-+">Dan schuuwt de Brit ons <rhyme label="d" type="m">Strand</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">En roept; ‘ik ben <rhyme label="c" type="f" corresp="#s4:l5">verwonnen</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Door 't vrye <rhyme label="d" type="m" corresp="#s4:l6">Nederland</rhyme>.’</l>
      </lg>
    </lg>
  </text>
</song>

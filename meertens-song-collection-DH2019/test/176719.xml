  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="+-">Tis wel een groot <rhyme label="a" type="f">wonder</rhyme>,</l>
        <l id="s1:l2" met="3" type="+-">Datmen soo kleyn <rhyme label="b" type="m">acht</rhyme>,</l>
        <l id="s1:l3" met="3" type="+-">Die Propheeten <rhyme label="a" type="f" corresp="#s1:l1">vermonden</rhyme>,</l>
        <l id="s1:l4" met="3" type="+-">Van soo grooten <rhyme label="b" type="m" corresp="#s1:l2">dach</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Die vreesselijck sal <rhyme label="c" type="f">komen</rhyme>:</l>
        <l id="s1:l6" met="4" type="+-">Als een Dief doet inder <rhyme label="d" type="m">nacht</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Dan mach het volck wel <rhyme label="c" type="f" corresp="#s1:l5">schromen</rhyme>,</l>
        <l id="s1:l8" met="4" type="+-">Die Gods woort niet wel <rhyme label="d" type="m" corresp="#s1:l6">betracht</rhyme>:</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="+-">Men macht wel <rhyme label="a" type="f">gheloven</rhyme>,</l>
        <l id="s2:l2" met="3" type="+-">Dat des Heeren <rhyme label="b" type="m">dach</rhyme>,</l>
        <l id="s2:l3" met="3" type="+-">Sal branden als een <rhyme label="a" type="f" corresp="#s2:l1">Oven</rhyme>,</l>
        <l id="s2:l4" met="3" type="+-">Vyeren dach noch <rhyme label="b" type="m" corresp="#s2:l2">nacht</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Dan sullen die <rhyme label="c" type="f">lieden</rhyme>:</l>
        <l id="s2:l6" met="4" type="+-">Soo bangh zijn als een die <rhyme label="d" type="m">baert</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Van benautheyt <rhyme label="c" type="f" corresp="#s2:l5">vlieden</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Kruypen in holen der <rhyme label="d" type="m" corresp="#s2:l6">aert</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="+-">Dan sal ‘t volck noch <rhyme label="a" type="f">kallen</rhyme>,</l>
        <l id="s3:l2" met="3" type="+-">Tot de Berghen <rhyme label="b" type="m">groot</rhyme>,</l>
        <l id="s3:l3" met="3" type="+-">Wilt doch op ons <rhyme label="a" type="f" corresp="#s3:l1">vallen</rhyme>,</l>
        <l id="s3:l4" met="3" type="+-">Helpt ons nu ter <rhyme label="b" type="m" corresp="#s3:l2">doodt</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">Maer ten sal niet <rhyme label="c" type="f">gheschieden</rhyme>,</l>
        <l id="s3:l6" met="4" type="+-">Want de Doodt sasl van haer <rhyme label="d" type="m">vlien</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Die Rechter sal <rhyme label="c" type="f" corresp="#s3:l5">ghebieden</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Voor hem te buyghen alle <rhyme label="d" type="m" corresp="#s3:l6">knien</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="+-">Die Rechter sal hem <rhyme label="a" type="f">stellen</rhyme></l>
        <l id="s4:l2" met="3" type="+-">Op sijn Stoel <rhyme label="b" type="m">playsant</rhyme>,</l>
        <l id="s4:l3" met="3" type="+-">Hy sal de Bockedn <rhyme label="a" type="f" corresp="#s4:l1">quellen</rhyme>,</l>
        <l id="s4:l4" met="3" type="+-">Tot sijn <rhyme label="b" type="m" corresp="#s4:l2">slinckerhant</rhyme>.</l>
        <l id="s4:l5" met="3" type="-+">Die Schapen sullen <rhyme label="c" type="f">hooren</rhyme>,</l>
        <l id="s4:l6" met="4" type="+-">Komt ghy in mijn Rijck <rhyme label="d" type="m">planteyt</rhyme>:</l>
        <l id="s4:l7" met="3" type="-+">Dat u lanagh te <rhyme label="c" type="f" corresp="#s4:l5">vooren</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Vreughdigh van Godt is <rhyme label="d" type="m" corresp="#s4:l6">bereyt</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="+-">‘t Is waerdigh te <rhyme label="a" type="f">aenmercken</rhyme>,</l>
        <l id="s5:l2" met="3" type="+-">Het groot <rhyme label="b" type="m">onderscheyt</rhyme></l>
        <l id="s5:l3" met="3" type="+-">Dat elck loon nae <rhyme label="a" type="f" corresp="#s5:l1">wercken</rhyme></l>
        <l id="s5:l4" met="3" type="+-">Van Godt is <rhyme label="b" type="m" corresp="#s5:l2">bereyt</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Dier vrome is ten <rhyme label="c" type="f">sijne</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Een soo schoonen Kroon <rhyme label="d" type="m">bereyt</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Die boose gaan in <rhyme label="c" type="f" corresp="#s5:l5">pijne</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">Och! daermen eeuwich huylt en <rhyme label="d" type="m" corresp="#s5:l6">schreit</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="+-">Och! menschen laet u <rhyme label="a" type="f">leeren</rhyme>,</l>
        <l id="s6:l2" met="3" type="+-">Doet nae Ioels <rhyme label="b" type="m">raet</rhyme>,</l>
        <l id="s6:l3" met="3" type="+-">Bekeert u tot den <rhyme label="a" type="f" corresp="#s6:l1">Heere</rhyme>,</l>
        <l id="s6:l4" met="3" type="+-">Eeer ‘t hier valt te <rhyme label="b" type="m" corresp="#s6:l2">laet</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Wilt u zonden <rhyme label="c" type="f">beweenen</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">Scheuret niet uwen <rhyme label="d" type="m">ghewaet</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">U hert soo hardt als <rhyme label="c" type="f" corresp="#s6:l5">steenen</rhyme>,</l>
        <l id="s6:l8" met="4" type="+-">Met Godts woort in stucken <rhyme label="d" type="m" corresp="#s6:l6">slaet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="+-">Met vasten en met <rhyme label="a" type="f">klaghen</rhyme>,</l>
        <l id="s7:l2" met="3" type="+-">Valt den Heere te <rhyme label="b" type="m">voet</rhyme>,</l>
        <l id="s7:l3" met="3" type="+-">‘t Sal hem wel <rhyme label="a" type="f" corresp="#s7:l1">behaghen</rhyme>,</l>
        <l id="s7:l4" met="3" type="+-">Doet oprecht <rhyme label="b" type="m" corresp="#s7:l2">boet</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Merckt aen de <rhyme label="c" type="f">Nineviten</rhyme>,</l>
        <l id="s7:l6" met="4" type="+-">Sy waren al <rhyme label="d" type="m">gecondemneert</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">’t Scheen Ionas wat te <rhyme label="c" type="f" corresp="#s7:l5">spijten</rhyme>,</l>
        <l id="s7:l8" met="4" type="+-">Godt heeftse al <rhyme label="d" type="m" corresp="#s7:l6">gheabsolveert</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="+-">Wilt den Heere <rhyme label="a" type="f">ghenaken</rhyme>,</l>
        <l id="s8:l2" met="3" type="+-">Met Aelmoessen <rhyme label="b" type="m">groot</rhyme>,</l>
        <l id="s8:l3" met="3" type="+-">Hy sal sneeu wit <rhyme label="a" type="f" corresp="#s8:l1">maken</rhyme>,</l>
        <l id="s8:l4" met="3" type="+-">U zonden bloet <rhyme label="b" type="m" corresp="#s8:l2">root</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Hy sal niet altoos <rhyme label="c" type="f">kijven</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Noch oock eeuwich toornich <rhyme label="d" type="m">zijn</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Als u boos <rhyme label="c" type="f" corresp="#s8:l5">bedrijven</rhyme>,</l>
        <l id="s8:l8" met="4" type="+-">Sal hy wel uytwrijven <rhyme label="d" type="m" corresp="#s8:l6">fijn</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="+-">Ghelijck Hemel en <rhyme label="a" type="f">Aerde</rhyme>,</l>
        <l id="s9:l2" met="3" type="+-">Veer verscheiden <rhyme label="b" type="m">staet</rhyme>,</l>
        <l id="s9:l3" met="3" type="+-">Laet Godt van ons <rhyme label="a" type="f" corresp="#s9:l1">waerden</rhyme>,</l>
        <l id="s9:l4" met="3" type="+-">Al onse <rhyme label="b" type="m" corresp="#s9:l2">misdaet</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Ghelijck als eenen <rhyme label="c" type="f">Vader</rhyme>,</l>
        <l id="s9:l6" met="4" type="+-">Tot sijn Soone is <rhyme label="d" type="m">ghesint</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">Heeft G’odt ons <rhyme label="c" type="f" corresp="#s9:l5">allegader</rhyme>,</l>
        <l id="s9:l8" met="4" type="+-">Die hem vreesen recht <rhyme label="d" type="m" corresp="#s9:l6">bemint</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="+-">Men mach niet <rhyme label="a" type="f">versaghen</rhyme></l>
        <l id="s10:l2" met="3" type="+-">Aen Gots goetheyt <rhyme label="b" type="m">groot</rhyme>,</l>
        <l id="s10:l3" met="3" type="+-">Hy heeft gheen <rhyme label="a" type="f" corresp="#s10:l1">behaghen</rhyme>,</l>
        <l id="s10:l4" met="3" type="+-">Aen de zonders <rhyme label="b" type="m" corresp="#s10:l2">doot</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Denckt hoe lief heeft een <rhyme label="c" type="f">Moeder</rhyme>:</l>
        <l id="s10:l6" met="4" type="+-">‘t Kint dat sy selfs heeft <rhyme label="d" type="m">ghebaert</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">Godt is noch veel <rhyme label="c" type="f" corresp="#s10:l5">goeder</rhyme>,</l>
        <l id="s10:l8" met="4" type="+-">Hy heeft ons als sijn oogh <rhyme label="d" type="m" corresp="#s10:l6">bewaert</rhyme></l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="3" type="+-">Al hebben wy met <rhyme label="a" type="f">schanden</rhyme>,</l>
        <l id="s11:l2" met="3" type="+-">Al ons Erf-goet <rhyme label="b" type="m">schoon</rhyme>,</l>
        <l id="s11:l3" met="3" type="+-">Verteert in vremde <rhyme label="a" type="f" corresp="#s11:l1">Landen</rhyme>,</l>
        <l id="s11:l4" met="3" type="+-">Met de verlooren <rhyme label="b" type="m" corresp="#s11:l2">Soon</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">So dat wy moeten <rhyme label="c" type="f">teeren</rhyme>,</l>
        <l id="s11:l6" met="4" type="+-">Vant vuyl Veerckens draf <rhyme label="d" type="m">onsoet</rhyme>,</l>
        <l id="s11:l7" met="3" type="-+">Als wy maer ‘t Huys-waerts <rhyme label="c" type="f" corresp="#s11:l5">keeren</rhyme>,</l>
        <l id="s11:l8" met="4" type="+-">Ons Vader loopt ons te <rhyme label="d" type="m" corresp="#s11:l6">ghemoet</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="3" type="+-">Hy sal ons niet meer <rhyme label="a" type="f">loonen</rhyme>,</l>
        <l id="s12:l2" met="3" type="+-">Als een Huyrlinck <rhyme label="b" type="m">swack</rhyme>,</l>
        <l id="s12:l3" met="3" type="+-">Welkom lieve <rhyme label="a" type="f" corresp="#s12:l1">Soone</rhyme>,</l>
        <l id="s12:l4" met="3" type="+-">Treckt aen ‘t beste <rhyme label="b" type="m" corresp="#s12:l2">pack</rhyme>,</l>
        <l id="s12:l5" met="3" type="-+">Het Lam is al <rhyme label="c" type="f">gheslagen</rhyme>,</l>
        <l id="s12:l6" met="4" type="+-">Komt mijn maeltijdt is <rhyme label="d" type="m">bereyt</rhyme>,</l>
        <l id="s12:l7" met="3" type="-+">U druck sal hy <rhyme label="c" type="f" corresp="#s12:l5">af-vaghen</rhyme>,</l>
        <l id="s12:l8" met="4" type="+-">Komt woont by my in <rhyme label="d" type="m" corresp="#s12:l6">eeuwicheyt</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="3" type="+-">Om eeuwich daer te <rhyme label="a" type="f">woonen</rhyme>,</l>
        <l id="s13:l2" met="3" type="+-">Dat is al mijn <rhyme label="b" type="m">begheer</rhyme>,</l>
        <l id="s13:l3" met="3" type="+-">Men ontfanght daer <rhyme label="a" type="f" corresp="#s13:l1">Kroonen</rhyme>,</l>
        <l id="s13:l4" met="3" type="+-">Men truyrt daer niet <rhyme label="b" type="m" corresp="#s13:l2">meer</rhyme>,</l>
        <l id="s13:l5" met="3" type="-+">Men krijght daer nieuw <rhyme label="c" type="f">habijten</rhyme>,</l>
        <l id="s13:l6" met="4" type="+-">Hier mee blijft mijn Liedt in ‘t <rhyme label="d" type="m">slot</rhyme>,</l>
        <l id="s13:l7" met="3" type="-+">Alle ware <rhyme label="c" type="f" corresp="#s13:l5">Israelijten</rhyme>,</l>
        <l id="s13:l8" met="4" type="+-">Blijft hier mee bevolen <rhyme label="d" type="m" corresp="#s13:l6">Godt</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

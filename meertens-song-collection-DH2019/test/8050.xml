    <tags>
      <tag standard-name="geestelijk lied" translation="spiritual song">Geestelijk lied</tag>
    </tags>
    <melody>Dat is wil dij van de waarheid horen zingen</melody>
    <categories/>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">DIe wil na dat nieuwe <rhyme label="a" type="m">Ierusalem</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Die stae vroegh op, en maecke <rhyme label="a" type="m" corresp="#s1:l1">hem</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Al op de rechte <rhyme label="b" type="f">strate</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Hy neme waer des Heeren <rhyme label="a" type="m" corresp="#s1:l1">stem</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Soo en komt hy niet te <rhyme label="b" type="f" corresp="#s1:l3">late</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Verduldigh en lijdtsaem in druck en <rhyme label="a" type="m">pijn</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Moet hy, en van sonden wel ghebetert <rhyme label="a" type="m" corresp="#s2:l1">zijn</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Al worden wy hier <rhyme label="b" type="f">versteecken</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Want bleven wy in 'swerelts <rhyme label="a" type="m" corresp="#s2:l1">schijn</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Soo mocht ons Godts ghenade <rhyme label="b" type="f" corresp="#s2:l3">ghebreecken</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Daer leyt eenen wegh inder woestijne <rhyme label="a" type="m">landt</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Daer zijn wy pelgrims soo qualijck in <rhyme label="a" type="m" corresp="#s3:l1">bekandt</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Van berghen en van <rhyme label="b" type="f">dalen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Broeders, die willen na Canaan <rhyme label="a" type="m" corresp="#s3:l1">playsant</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">'Tvleesch lusten sullen ons <rhyme label="b" type="f" corresp="#s3:l3">falen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Eerst komen wy door dat roode <rhyme label="a" type="m">meyr</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Daer volght ons Pharao met sijn <rhyme label="a" type="m" corresp="#s4:l1">heyr</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Wy en weten waer henen <rhyme label="b" type="f">glieden</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Wy en hebben pantsier, sweert noch <rhyme label="a" type="m" corresp="#s4:l1">gheweyr</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Maer totten Heere moeten wy <rhyme label="b" type="f" corresp="#s4:l3">vlieden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Als wy door 't water zijn in de <rhyme label="a" type="m">wildernis</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Dan ghebreeckt ons spijse, och Heere, dat <rhyme label="a" type="m" corresp="#s5:l1">is</rhyme></l>
        <l id="s5:l3" met="3" type="-+">V woordt, daer moeten wy by <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">En daer toe een recht gheloove <rhyme label="a" type="m" corresp="#s5:l1">ghewis</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Wilt ons Heere dat altijdts <rhyme label="b" type="f" corresp="#s5:l3">gheven</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Wy moeten oock, door <rhyme label="a" type="m">Raphidin</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Ghebreeckt ons dat water soo wilt ons gheven <rhyme label="a" type="m" corresp="#s6:l1">in</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Dijnen Gheest ons te <rhyme label="b" type="f">vermaecken</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Wy moeten door de woestijne <rhyme label="a" type="m" corresp="#s6:l1">Sin</rhyme>,</l>
        <l id="s6:l5" met="3" type="-+">Souden wy voor by Amaleck <rhyme label="b" type="f" corresp="#s6:l3">gheraecken</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Van daer onder den bergh <rhyme label="a" type="m">Syna</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">daer krijghen wy de leere door sijn <rhyme label="a" type="m" corresp="#s7:l1">ghena</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Die machmen niet <rhyme label="b" type="f">overtreden</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Noch te Paran en Kades <rhyme label="a" type="m" corresp="#s7:l1">Bernia</rhyme></l>
        <l id="s7:l5" met="3" type="-+">Niet volghen Israels <rhyme label="b" type="f" corresp="#s7:l3">zeden</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Moeten wy dan weder te rugge <rhyme label="a" type="m">krom</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Soo wandelen wy om 'tgeberghte <rhyme label="a" type="m" corresp="#s8:l1">Edom</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Daer mach van Amaleck niet <rhyme label="b" type="f">overblijven</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Maer vroomlijck strijden, teghen de Coningh <rhyme label="a" type="m" corresp="#s8:l1">Syhon</rhyme>,</l>
        <l id="s8:l5" met="3" type="-+">Ons wachten van buytenlandtsche <rhyme label="b" type="f" corresp="#s8:l3">wijven</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Dan komen wy over de beecke <rhyme label="a" type="m">Arnon</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Soo ist om een kleyn wijlken te <rhyme label="a" type="m" corresp="#s9:l1">doen</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Wy en moghen voor de Iordaen niet <rhyme label="b" type="f">flouwen</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">maer Iericho innemen, als vrome Ridders <rhyme label="a" type="m" corresp="#s9:l1">coen</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Dan is 't gheloove <rhyme label="b" type="f" corresp="#s9:l3">behouwen</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Broeders, susters, verstaet de meyningh <rhyme label="a" type="m">wel</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">End' neemt een exempel aen <rhyme label="a" type="m" corresp="#s10:l1">Israel</rhyme>,</l>
        <l id="s10:l3" met="3" type="-+">'Tis tot onser leeringhe <rhyme label="b" type="f">gheschreven</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Want die doen Gode waren <rhyme label="a" type="m" corresp="#s10:l1">rebel</rhyme>,</l>
        <l id="s10:l5" met="3" type="-+">Sijn in de wildernisse <rhyme label="b" type="f" corresp="#s10:l3">ghebleven</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Die dit liedeken heeft <rhyme label="a" type="m">ghestelt</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Was mede voor dat roode meyr <rhyme label="a" type="m" corresp="#s11:l1">ghetelt</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Hy hevet dus moeten <rhyme label="b" type="f">singhen</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Wilde Godt hy quam voor Iericho in't <rhyme label="a" type="m" corresp="#s11:l1">velt</rhyme>,</l>
        <l id="s11:l5" met="3" type="-+">Dat hem dat mocht <rhyme label="b" type="f" corresp="#s11:l3">ghelinghen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

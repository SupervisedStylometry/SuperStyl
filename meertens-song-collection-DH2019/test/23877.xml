<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>23877</id>
    <date>
      <year-start>1592</year-start>
      <year-end>1592</year-end>
    </date>
    <tags>
      <tag standard-name="gezongen geloofsbelijdenis" translation="confession of faith song">gezongen geloofsbelijdenis</tag>
    </tags>
    <melody>Psalm 100 Datheen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HOort al tesamen, groot en <rhyme label="a" type="m">cleen</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Wy willen, belijden <rhyme label="a" type="m" corresp="#s1:l1">ghemeen</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">En bekennen tot deser <rhyme label="b" type="m">stont</rhyme>:</l>
        <l id="s1:l4" met="4" type="-+">Ons ghelooue, Wt herten <rhyme label="b" type="m" corresp="#s1:l3">grondt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wy geloouen, al <rhyme label="a" type="m">eendrachtich</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Jn Godt de Uader <rhyme label="a" type="m" corresp="#s2:l1">almachtich</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">De Hemel aerd, en al wat <rhyme label="b" type="m">leeft</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Gheschapen en , ghemaket <rhyme label="b" type="m" corresp="#s2:l3">heeft</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ende in Jesum, Christum <rhyme label="a" type="m">goedt</rhyme>,</l>
        <l id="s3:l2" met="4" type="-+">Sijnen Soon, onsen Heere <rhyme label="a" type="m" corresp="#s3:l1">vroedt</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Die vanden heilgen Gheest, <rhyme label="b" type="m">gewis</rhyme>:</l>
        <l id="s3:l4" met="4" type="-+">Sonder smetten, ontfangen <rhyme label="b" type="m" corresp="#s3:l3">is</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Jn Maria de Maget <rhyme label="a" type="m">claer</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">En door Godes Cracht, seer <rhyme label="a" type="m" corresp="#s4:l1">wonderbaer</rhyme></l>
        <l id="s4:l3" met="4" type="-+">So de Heylige Gheest <rhyme label="b" type="m">verclaert</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Een Sone Godts van haer <rhyme label="b" type="m" corresp="#s4:l3">gebaert</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Die heeft voor onse, sonden <rhyme label="a" type="m">al</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Geleden in dit, Aertsche <rhyme label="a" type="m" corresp="#s5:l1">dal</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Js ghecruyst en gestoruen, <rhyme label="b" type="m">O</rhyme>:</l>
        <l id="s5:l4" met="4" type="-+">Onder Pontia <rhyme label="b" type="m" corresp="#s5:l3">Pilato</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Begrauen so is, sijn <rhyme label="a" type="m">lichaem</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Hy is gedaelt, so wy <rhyme label="a" type="m" corresp="#s6:l1">verstaen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Ter hellen neder, tonser <rhyme label="b" type="m">baet</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Onsen trooster, en <rhyme label="b" type="m" corresp="#s6:l3">advocaet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Tenderden dage, so is <rhyme label="a" type="m">hy</rhyme>:</l>
        <l id="s7:l2" met="4" type="-+">Uander doot, opgestanden <rhyme label="a" type="m" corresp="#s7:l1">vry</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Wt den Graue, verresen <rhyme label="b" type="m">claer</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">En verwan ons vyanden <rhyme label="b" type="m" corresp="#s7:l3">swaer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Ten Hemel hooch, Jn Godes <rhyme label="a" type="m">troen</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Js hy opgeclommen <rhyme label="a" type="m" corresp="#s8:l1">ydoen</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">En sidt ter rechter handt, <rhyme label="b" type="m">Crachtich</rhyme>:</l>
        <l id="s8:l4" met="4" type="-+">Godt des Uaders, alles <rhyme label="b" type="m" corresp="#s8:l3">machtich</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Wy geloouen ock minst en  <rhyme label="a" type="m">meest</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">Uan herten inden Heyligen <rhyme label="a" type="m" corresp="#s9:l1">Geest</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Wy belijden, hier in dit <rhyme label="b" type="m">perck</rhyme>:</l>
        <l id="s9:l4" met="4" type="-+">Een algemeijn, Christlijcke <rhyme label="b" type="m" corresp="#s9:l3">Kerck</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Ghemeinschap, der heyligen <rhyme label="a" type="m">mee</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Oock der sonden <rhyme label="a" type="m" corresp="#s10:l1">vergeuinge</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">En onses vlees, <rhyme label="b" type="m">verrijsenis</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Een eewich leuen, zeer <rhyme label="b" type="m" corresp="#s10:l3">ghewis</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Dit is, onsen Ghelooue <rhyme label="a" type="m">reijn</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Dwelck wy belijden groot en <rhyme label="a" type="m" corresp="#s11:l1">cleijn</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Ende wat, Godes woort meer <rhyme label="b" type="m">leert</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Werdt van ons ghelooft, en <rhyme label="b" type="m" corresp="#s11:l3">gheeert</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Wy bidden dy, Godt Uader <rhyme label="a" type="m">goedt</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Ons toch voor valsche, leer <rhyme label="a" type="m" corresp="#s12:l1">behoedt</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Jn dyne waerheyt, <rhyme label="b" type="m">altzamen</rhyme>:</l>
        <l id="s12:l4" met="4" type="-+">Behoudt ons, O Heere <rhyme label="b" type="m" corresp="#s12:l3">Amen</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

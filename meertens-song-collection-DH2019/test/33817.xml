  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">OP eenen tijdt soo is 't <rhyme label="a" type="m">geschiet</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Dat eenen Prins der <rhyme label="b" type="f">Synagoge</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Jairus, Jesum koomen <rhyme label="a" type="m" corresp="#s1:l1">siet</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Heeft voor sijn voeten <rhyme label="b" type="f" corresp="#s1:l2">neer-gebooge</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Hem biddende met groot <rhyme label="a" type="m">ootmoet</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Om van hem mogen te <rhyme label="b" type="f">verwerven</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">t'Sijn' huys te koomen met 'er <rhyme label="a" type="m" corresp="#s2:l1">spoet</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">Sijn eenigh Doghter lagh op <rhyme label="b" type="f" corresp="#s2:l2">sterven</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Kom, leght op haer uw' handt, hy <rhyme label="a" type="m">seydt</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Tot Iesus, met seer groot <rhyme label="b" type="f">eerbieden</rhyme>;</l>
        <l id="s3:l3" met="4" type="-+">En Iesus was terstondt <rhyme label="a" type="m" corresp="#s3:l1">bereydt</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Gingh meed', hem volghden veele <rhyme label="b" type="f" corresp="#s3:l2">lieden</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">En onderwijlen koomen <rhyme label="a" type="m">daer</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Aenloopen deeses Princen <rhyme label="b" type="f">Knechten</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">En brengen meed' de droeve <rhyme label="a" type="m" corresp="#s4:l1">maar</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">Om hem daer van te <rhyme label="b" type="f" corresp="#s4:l2">onderrechten</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Uw' Dochter, seyden sy, is <rhyme label="a" type="m">doot</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Wilt Jesum niet meer moeylijk <rhyme label="b" type="f">weesen</rhyme>.</l>
        <l id="s5:l3" met="4" type="-+">Maer Jesus seyde, 't is geen <rhyme label="a" type="m" corresp="#s5:l1">noot</rhyme>,</l>
        <l id="s5:l4" met="4" type="-+">Gelooft maer, en sy sal <rhyme label="b" type="f" corresp="#s5:l2">geneesen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Als hy by 's Princen huyse <rhyme label="a" type="m">quam</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Gingh 't op een schreyen ende <rhyme label="b" type="f">steenen</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">En wanneer Iesus dat <rhyme label="a" type="m" corresp="#s6:l1">vernam</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Seydt hy tot haer, en wilt niet <rhyme label="b" type="f" corresp="#s6:l2">weenen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Het Doghterken is immers <rhyme label="a" type="m">niet</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Gestorven; maer slaept <rhyme label="b" type="f">warelijken</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">En datelijken hy <rhyme label="a" type="m" corresp="#s7:l1">gebiet</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">De scharen daer van daen te <rhyme label="b" type="f" corresp="#s7:l2">wijken</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Wanneer het volk was <rhyme label="a" type="m">uyt-gedaen</rhyme>,</l>
        <l id="s8:l2" met="4" type="-+">Is met haer Moeder ende <rhyme label="b" type="f">Vader</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">En drie Discipels <rhyme label="a" type="m" corresp="#s8:l1">in-gegaen</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">En quam by 't doode Meysken <rhyme label="b" type="f" corresp="#s8:l2">nader</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Hy heeft haer by de handt <rhyme label="a" type="m">gevaet</rhyme>,</l>
        <l id="s9:l2" met="4" type="-+">En roepende, seyd' hy tot <rhyme label="b" type="f">hare</rhyme>,</l>
        <l id="s9:l3" met="4" type="-+">Ik segh u, Kindt, dat gy op <rhyme label="a" type="m" corresp="#s9:l1">staet</rhyme>,</l>
        <l id="s9:l4" met="4" type="-+">Sy was oudt ontrent twalif <rhyme label="b" type="f" corresp="#s9:l2">jare</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Haer siele quam weerom in <rhyme label="a" type="m">haer</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">En is terstonden <rhyme label="b" type="f">opgereesen</rhyme>,</l>
        <l id="s10:l3" met="4" type="-+">En wandelden voorts hier en <rhyme label="a" type="m" corresp="#s10:l1">daer</rhyme>,</l>
        <l id="s10:l4" met="4" type="-+">Haer ouders waren vol van <rhyme label="b" type="f" corresp="#s10:l2">vreesen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">En Iesus die belasten <rhyme label="a" type="m">haer</rhyme>,</l>
        <l id="s11:l2" met="4" type="-+">Maekt dat het niemant koomt te <rhyme label="b" type="f">weeten</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">En brenght het niet in 't <rhyme label="a" type="m" corresp="#s11:l1">openbaer</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Maer geef uw' Doghter wat te <rhyme label="b" type="f" corresp="#s11:l2">eeten</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Ons siele die raekt in de <rhyme label="a" type="m">doot</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Soo rasch als wy in sonde <rhyme label="b" type="f">loope</rhyme>,</l>
        <l id="s12:l3" met="4" type="-+">Heer koomt ons by in sulken <rhyme label="a" type="m" corresp="#s12:l1">noot</rhyme>,</l>
        <l id="s12:l4" met="4" type="-+">Want gy alleen sijt onse <rhyme label="b" type="f" corresp="#s12:l2">hoope</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

    <melody>O dag zeer groot van heerlijkheid</melody>
    <categories>
      <category translation="seasons and annual events">jaarkring</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Dagh seer groot van <rhyme label="a" type="m">heerlikheyt</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Vol Godelijke <rhyme label="a" type="m" corresp="#s1:l1">Majesteyt</rhyme>!</l>
        <l id="s1:l3" met="4" type="-+">Wie souw doch Godt genoeghsaem <rhyme label="b" type="f">loven</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Die op 't beroemde <rhyme label="c" type="m">Pinxter-Feest</rhyme></l>
        <l id="s1:l5" met="4" type="-+">Gesonden heeft den Heyl'gen <rhyme label="c" type="m" corresp="#s1:l4">Geest</rhyme></l>
        <l id="s1:l6" met="4" type="-+">Op syn Apostelen, van <rhyme label="b" type="f" corresp="#s1:l3">boven</rhyme>!</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Sy waren in een <rhyme label="a" type="m">opper-zael</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Met angst, met sorge, druk en <rhyme label="a" type="m" corresp="#s2:l1">quael</rhyme></l>
        <l id="s2:l3" met="4" type="-+">Al-t'samen heftigh <rhyme label="b" type="f">ingenomen</rhyme>:</l>
        <l id="s2:l4" met="4" type="-+">De Trooster, die van Christo <rhyme label="c" type="m">haer</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Was toegeseyt, die is <rhyme label="c" type="m" corresp="#s2:l4">aldaer</rhyme>,</l>
        <l id="s2:l6" met="4" type="-+">Na syn beloftenis, <rhyme label="b" type="f" corresp="#s2:l3">gekomen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Eendrachtigh waren sy te <rhyme label="a" type="m">saem</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Vergadert in des Heeren <rhyme label="a" type="m" corresp="#s3:l1">naem</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">'t Hert in 't gebedt zijnd' <rhyme label="b" type="f">opgeheven</rhyme>;</l>
        <l id="s3:l4" met="4" type="-+">En siet, aldaer geschiedden <rhyme label="c" type="m">uyt</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Den Hemel haestigh een <rhyme label="c" type="m" corresp="#s3:l4">geluyt</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Als van een wint seer sterk <rhyme label="b" type="f" corresp="#s3:l3">gedreven</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">'t Huys, daer sy saten, wierd <rhyme label="a" type="m">geheel</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Daer van vervult aen yeder <rhyme label="a" type="m" corresp="#s4:l1">deel</rhyme>.</l>
        <l id="s4:l3" met="4" type="-+">Hier op verscheen al meerder <rhyme label="b" type="f">wonder</rhyme>;</l>
        <l id="s4:l4" met="4" type="-+">Want daet'lik sagen sy <rhyme label="c" type="m">alhier</rhyme></l>
        <l id="s4:l5" met="4" type="-+">Verdeelde tongen als van <rhyme label="c" type="m" corresp="#s4:l4">vyer</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">En 't sat op elk van haer <rhyme label="b" type="f" corresp="#s4:l3">besonder</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Sy zijn seer haest vervult <rhyme label="a" type="m">geweest</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Al-t'samen met den Heyl'gen <rhyme label="a" type="m" corresp="#s5:l1">Geest</rhyme>;</l>
        <l id="s5:l3" met="4" type="-+">Met and're talen sy <rhyme label="b" type="f">begonden</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Te spreken, soo de Geest aen <rhyme label="c" type="m">haer</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Gaf uyt te spreken, die sy <rhyme label="c" type="m" corresp="#s5:l4">klaer</rhyme></l>
        <l id="s5:l6" met="4" type="-+">Gelijk haer eygen tael <rhyme label="b" type="f" corresp="#s5:l3">verstonden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Komt doch, Ã´ Godelijke <rhyme label="a" type="m">Windt</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Die alle damp en ramp <rhyme label="a" type="m" corresp="#s6:l1">verslindt</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Ey komt geweldigh aen <rhyme label="b" type="f">gedreven</rhyme>:</l>
        <l id="s6:l4" met="4" type="-+">Wilt met uw liefelijk <rhyme label="c" type="m">gedruys</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Doorwaeyen onser herten <rhyme label="c" type="m" corresp="#s6:l4">huys</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">'t Welk wy u tot een tempel <rhyme label="b" type="f" corresp="#s6:l3">geven</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">O Hemelsch Vyer, komt op ons <rhyme label="a" type="m">neer</rhyme>,</l>
        <l id="s7:l2" met="4" type="-+">Op dat wy mogen meer en <rhyme label="a" type="m" corresp="#s7:l1">meer</rhyme></l>
        <l id="s7:l3" met="4" type="-+">In heyl'ge liefd' en yver <rhyme label="b" type="f">branden</rhyme>.</l>
        <l id="s7:l4" met="4" type="-+">Geeft ons te spreken <rhyme label="c" type="m">altemael</rhyme></l>
        <l id="s7:l5" met="4" type="-+">Uw wond'ren met een nieuwe <rhyme label="c" type="m" corresp="#s7:l4">tael</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">Doorsnydet onser tongen <rhyme label="b" type="f" corresp="#s7:l3">banden</rhyme>.</l>
      </lg>
    </lg>

    <melody>Ach Gott vom Himmel</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">Ghy kleyne Christen hoopken <rhyme label="a" type="m">och</rhyme>!</l>
        <l id="s1:l2" met="3" type="-+">Moet wassen en <rhyme label="b" type="f">vermeeren</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Ghy zijt soo kleyn een schaere <rhyme label="a" type="m" corresp="#s1:l1">doch</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Wilt Godt met wercken <rhyme label="b" type="f" corresp="#s1:l2">eeren</rhyme>:</l>
        <l id="s1:l5" met="4" type="-+">Siet niet op werelt, vleesch noch <rhyme label="c" type="m">bloet</rhyme>,</l>
        <l id="s1:l6" met="4" type="-+">Noch op dit kleyn verganckelijck <rhyme label="c" type="m" corresp="#s1:l5">goet</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Maer slechts op ‘t woordt des <rhyme label="b" type="f" corresp="#s1:l2">Heeren</rhyme></l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Lieve Christen <rhyme label="a" type="m">vergaderingh</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Ghy zijt van kleynen <rhyme label="b" type="f">hoope</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Vermaent malkander <rhyme label="a" type="m" corresp="#s2:l1">sonderlingh</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Dat niemant ‘t ruym door <rhyme label="b" type="f" corresp="#s2:l2">loope</rhyme>:</l>
        <l id="s2:l5" met="4" type="-+">Slaet altoos op malkander <rhyme label="c" type="m">acht</rhyme></l>
        <l id="s2:l6" met="4" type="-+">Wacht dat niemandt van ons <rhyme label="c" type="m" corresp="#s2:l5">gheslacht</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">Sijn eerst gheboort <rhyme label="b" type="f" corresp="#s2:l2">verkoope</rhyme></l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Christen ghy heylich <rhyme label="a" type="m">Priesterdom</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Gaet niet op duyster <rhyme label="b" type="f">weghen</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Siet niet met Loths Huys Vrouw <rhyme label="a" type="m" corresp="#s3:l1">weerom</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Daer ghy zijt uyt <rhyme label="b" type="f" corresp="#s3:l2">ghesteghen</rhyme>:</l>
        <l id="s3:l5" met="4" type="-+">Wie aen den Ploech houdt en om <rhyme label="c" type="m">siet</rhyme>,</l>
        <l id="s3:l6" met="4" type="-+">Die en is nut totten Rijck Godts <rhyme label="c" type="m" corresp="#s3:l5">niet</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">Dus wandelt doch te <rhyme label="b" type="f" corresp="#s3:l2">deghen</rhyme></l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Kinders Godts neemt u tijdt wel <rhyme label="a" type="m">waer</rhyme></l>
        <l id="s4:l2" met="3" type="-+">’t Is schier de laetste <rhyme label="b" type="f">stonde</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Wordt nu niet mat noch <rhyme label="a" type="m" corresp="#s4:l1">wanckelbaer</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">In Godes woort <rhyme label="b" type="f" corresp="#s4:l2">bevonden</rhyme>:</l>
        <l id="s4:l5" met="4" type="-+">En laet de liefde niet worden <rhyme label="c" type="m">koudt</rhyme>,</l>
        <l id="s4:l6" met="4" type="-+">Maer waeckt, bidt, altoos jonck en <rhyme label="c" type="m" corresp="#s4:l5">oudt</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Vyerich uyt herten <rhyme label="b" type="f" corresp="#s4:l2">gronden</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Eert Godt met liefder sonder <rhyme label="a" type="m">smert</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Met herten, tonghen, <rhyme label="b" type="f">monden</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Wacht dat niemant is een boos <rhyme label="a" type="m" corresp="#s5:l1">hert</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Des ondeuchts wordt <rhyme label="b" type="f" corresp="#s5:l2">bevonden</rhyme>:</l>
        <l id="s5:l5" met="4" type="-+">’t Welck treedt van Godt en sijn <rhyme label="c" type="m">Ghemeent</rhyme></l>
        <l id="s5:l6" met="4" type="-+">Siet toe dat niemandt wordt <rhyme label="c" type="m" corresp="#s5:l5">versteent</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">Door valsch bedroch der <rhyme label="b" type="f" corresp="#s5:l2">zonden</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Godt wilt alleen nae volghen <rhyme label="a" type="m">sijn</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">Toont in als een nieu <rhyme label="b" type="f">leven</rhyme>,</l>
        <l id="s6:l3" met="4" type="-+">Laet Gods woordt niety ghelastert <rhyme label="a" type="m" corresp="#s6:l1">zijn</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Wilt goet exempel <rhyme label="b" type="f" corresp="#s6:l2">gheven</rhyme>:</l>
        <l id="s6:l5" met="4" type="-+">Weest ghy een spieghel alle <rhyme label="c" type="m">man</rhyme>,</l>
        <l id="s6:l6" met="4" type="-+">Dat men van u niet segghen <rhyme label="c" type="m" corresp="#s6:l5">kan</rhyme>,</l>
        <l id="s6:l7" met="3" type="-+">Dat ghy quaet hebt <rhyme label="b" type="f" corresp="#s6:l2">bedreven</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Met wercken wilt volbrenghen <rhyme label="a" type="m">wel</rhyme>,</l>
        <l id="s7:l2" met="3" type="-+">Dat ghy met u tonghe <rhyme label="b" type="f">spreecket</rhyme>,</l>
        <l id="s7:l3" met="4" type="-+">Wilt metter daet volbrenghen <rhyme label="a" type="m" corresp="#s7:l1">snel</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">Dat u van Godt wordt <rhyme label="b" type="f" corresp="#s7:l2">ontdecket</rhyme>,</l>
        <l id="s7:l5" met="4" type="-+">Wilt met den mont belijden <rhyme label="c" type="m">niet</rhyme>,</l>
        <l id="s7:l6" met="4" type="-+">En loochenent met de wercken <rhyme label="c" type="m" corresp="#s7:l5">siet</rhyme>,</l>
        <l id="s7:l7" met="3" type="-+">Goet te doen niet en <rhyme label="b" type="f" corresp="#s7:l2">vertrecket</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Werck en daet wilt bewijsen <rhyme label="a" type="m">jent</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Dat ghy zijt rechte <rhyme label="b" type="f">Christen</rhyme>,</l>
        <l id="s8:l3" met="4" type="-+">De Boom men aen zijn vruchten <rhyme label="a" type="m" corresp="#s8:l1">kent</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Dus hebt gheen <rhyme label="b" type="f" corresp="#s8:l2">arghelisten</rhyme>,</l>
        <l id="s8:l5" met="4" type="-+">Volcht vyerich nae u Heer u <rhyme label="c" type="m">Godt</rhyme>!</l>
        <l id="s8:l6" met="4" type="-+">Hebt hem lief en houdt sijn <rhyme label="c" type="m" corresp="#s8:l5">ghebodt</rhyme>,</l>
        <l id="s8:l7" met="3" type="-+">Schout alle <rhyme label="b" type="f" corresp="#s8:l2">Antechristen</rhyme></l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Dat niemant Gods genaed’ <rhyme label="a" type="m">versuymt</rhyme>,</l>
        <l id="s9:l2" met="3" type="-+">Op datter niet een <rhyme label="b" type="f">quade</rhyme></l>
        <l id="s9:l3" met="4" type="-+">Een bitter wortel uyt en <rhyme label="a" type="m" corresp="#s9:l1">schuymt</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">En doet soo u ziel <rhyme label="b" type="f" corresp="#s9:l2">schade</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">En gheeft laster noch <rhyme label="c" type="m">arghenis</rhyme>,</l>
        <l id="s9:l6" met="4" type="-+">Noch oock gheen quaet <rhyme label="c" type="m" corresp="#s9:l5">ghetuyghenis</rhyme>,</l>
        <l id="s9:l7" met="3" type="-+">En wijckt soo van Gods <rhyme label="b" type="f" corresp="#s9:l2">pade</rhyme></l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Leven wilt nae Godt woort en <rhyme label="a" type="m">leer</rhyme>,</l>
        <l id="s10:l2" met="3" type="-+">Wilt in als ghelijck <rhyme label="b" type="f">wesen</rhyme></l>
        <l id="s10:l3" met="4" type="-+">U Vader, Meester, ende <rhyme label="a" type="m" corresp="#s10:l1">Heer</rhyme></l>
        <l id="s10:l4" met="3" type="-+">Volcht recht in als nae <rhyme label="b" type="f" corresp="#s10:l2">desen</rhyme>:</l>
        <l id="s10:l5" met="4" type="-+">Bewijst met werck en daet <rhyme label="c" type="m">altijt</rhyme></l>
        <l id="s10:l6" met="4" type="-+">Dat ghy oprecht herboren <rhyme label="c" type="m" corresp="#s10:l5">zijt</rhyme>,</l>
        <l id="s10:l7" met="3" type="-+">En dat ghy Godt gaet <rhyme label="b" type="f" corresp="#s10:l2">vresen</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Doch wilt Godt u Prince u <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s11:l2" met="3" type="-+">Met werck en daet <rhyme label="b" type="f">belijden</rhyme>,</l>
        <l id="s11:l3" met="4" type="-+">Soeckt meer Gods eer dan ‘s menschen <rhyme label="a" type="m" corresp="#s11:l1">leer</rhyme></l>
        <l id="s11:l4" met="3" type="-+">Wilt voor de waerheyt <rhyme label="b" type="f" corresp="#s11:l2">strijden</rhyme>,</l>
        <l id="s11:l5" met="4" type="-+">Met ooghen traen, ick u <rhyme label="c" type="m">vermaen</rhyme>,</l>
        <l id="s11:l6" met="4" type="-+">Wijckt gheensins van de rechte <rhyme label="c" type="m" corresp="#s11:l5">barn</rhyme>:</l>
        <l id="s11:l7" met="3" type="-+">Hinght niet aen beyde <rhyme label="b" type="f" corresp="#s11:l2">zijden</rhyme></l>
      </lg>
    </lg>
  </text>
</song>

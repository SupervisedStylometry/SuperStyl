  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">SIlenus soeten <rhyme label="a" type="m">Knecht</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">Verklaerde my sijn <rhyme label="b" type="f">sinnen</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Al schynt hy my soo <rhyme label="a" type="m" corresp="#s1:l1">slecht</rhyme>;</l>
        <l id="s1:l4" met="3" type="-+">Wie kendt sijn hert van <rhyme label="b" type="f" corresp="#s1:l2">binnen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Ist soo dat hy my <rhyme label="a" type="m">mindt</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En mynt van goeder <rhyme label="b" type="f">herte</rhyme>;</l>
        <l id="s2:l3" met="3" type="-+">Tis reden, dat hy <rhyme label="a" type="m" corresp="#s2:l1">vindt</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Vernoegingh tot sijn <rhyme label="b" type="f" corresp="#s2:l2">smerte</rhyme>,</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Ick segh vernoegingh, <rhyme label="a" type="m">ja</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Vernoegingh boven <rhyme label="b" type="f">maeten</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Had' hy vernoegingh <rhyme label="a" type="m" corresp="#s3:l1">ha</rhyme>!</l>
        <l id="s3:l4" met="3" type="-+">Hy moght my dan <rhyme label="b" type="f" corresp="#s3:l2">verlaeten</rhyme>,</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Waert d'willeken <rhyme label="a" type="m">gedaen</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">En mijne jeught <rhyme label="b" type="f">versleten</rhyme></l>
        <l id="s4:l3" met="3" type="-+">De MIN waer haest <rhyme label="a" type="m" corresp="#s4:l1">vergaen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">En al sijn Trauw <rhyme label="b" type="f" corresp="#s4:l2">vergeten</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">De Herders klachten <rhyme label="a" type="m">sijn</rhyme></l>
        <l id="s5:l2" met="3" type="-+">Gevynst in al hun <rhyme label="b" type="f">weenen</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Soo langh wy wyg'rich <rhyme label="a" type="m" corresp="#s5:l1">zijn</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Soo langhe sy t' recht <rhyme label="b" type="f" corresp="#s5:l2">meenen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Niet (soo ick mijnen <rhyme label="a" type="m">hau</rhyme>)</l>
        <l id="s6:l2" met="3" type="-+">Die ick getrou moet <rhyme label="b" type="f">noemen</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Ick weet hy is <rhyme label="a" type="m" corresp="#s6:l1">getrauw</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Syn Trauwe doet my <rhyme label="b" type="f" corresp="#s6:l2">roemen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Tis MIN die rust ons <rhyme label="a" type="m">geeft</rhyme></l>
        <l id="s7:l2" met="3" type="-+">En tis al ons <rhyme label="b" type="f">verlangen</rhyme>;</l>
        <l id="s7:l3" met="3" type="-+">Die sulck getrauwen <rhyme label="a" type="m" corresp="#s7:l1">heeft</rhyme>,</l>
        <l id="s7:l4" met="3" type="-+">En vreest niet voor <rhyme label="b" type="f" corresp="#s7:l2">gevangen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Och Herder wist gy <rhyme label="a" type="m">dan</rhyme></l>
        <l id="s8:l2" met="3" type="-+">Mijn liefde wat te <rhyme label="b" type="f">staecken</rhyme>:</l>
        <l id="s8:l3" met="3" type="-+">Ken twyfel daer niet <rhyme label="a" type="m" corresp="#s8:l1">van</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Sy sou wat minder <rhyme label="b" type="f" corresp="#s8:l2">blaecken</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Ten dient ons niet <rhyme label="a" type="m">gevraeght</rhyme>;</l>
        <l id="s9:l2" met="3" type="-+">Maer wist gy wat een <rhyme label="b" type="f">smerte</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Dat somwyl t' herte <rhyme label="a" type="m" corresp="#s9:l1">draeght</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Wy wensten ons <rhyme label="b" type="f" corresp="#s9:l2">begerte</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="3" type="-+">Ick hoop dat hy dan <rhyme label="a" type="m">sal</rhyme></l>
        <l id="s10:l2" met="3" type="-+">Met goede Trouw <rhyme label="b" type="f">volherden</rhyme>:</l>
        <l id="s10:l3" met="3" type="-+">Dan schenck ick mijnen <rhyme label="a" type="m" corresp="#s10:l1">al</rhyme></l>
        <l id="s10:l4" met="3" type="-+">k' Hoop hy sal my <rhyme label="b" type="f" corresp="#s10:l2">gewerden</rhyme>.</l>
      </lg>
    </lg>
  </text>

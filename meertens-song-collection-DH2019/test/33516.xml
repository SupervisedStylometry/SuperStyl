<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>33516</id>
    <date>
      <year-start>1614</year-start>
      <year-end>1614</year-end>
    </date>
    <tags>
      <tag standard-name="loflied" translation="praise song">loflied</tag>
      <tag standard-name="heiligenlied" translation="saint song">heiligenlied</tag>
    </tags>
    <melody>Hoe luid zong de leraar op de tinnen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">O Heer wy louen bouen maten v <rhyme label="a" type="f">wercken</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Ghy hebt ons menschen gheschapen so <rhyme label="b" type="m">eel</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Hier op zoo gaen ick <rhyme label="a" type="f" corresp="#s1:l1">mercken</rhyme></l>
        <l id="s1:l4" met="4" type="-+">Hoe dat ghy ons bemint <rhyme label="b" type="m" corresp="#s1:l2">geheel</rhyme>,</l>
        <l id="s1:l5" met="4" type="-+">Want ghy beschickt ons helpers alsoo <rhyme label="b" type="m" corresp="#s1:l2">veel</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Om onse crancheyt te helpen <rhyme label="a" type="f" corresp="#s1:l1">verstercken</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Ghy hebt ons o Heere doen <rhyme label="a" type="f">bereyden</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Veel Salighe Gheesten in groot <rhyme label="b" type="m">ghetal</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Op dat sy ons souden <rhyme label="a" type="f" corresp="#s2:l1">gheleyden</rhyme></l>
        <l id="s2:l4" met="4" type="-+">Hier door dit aertsche <rhyme label="b" type="m" corresp="#s2:l2">dal</rhyme></l>
        <l id="s2:l5" met="4" type="-+">Door onse duystere weghen <rhyme label="b" type="m" corresp="#s2:l2">al</rhyme></l>
        <l id="s2:l6" met="3" type="-+">En nimmermeer van ons <rhyme label="a" type="f" corresp="#s2:l1">scheyden</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Eer dat wy waren alhier <rhyme label="a" type="f">gheboren</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Soo hebt ghy dese bewaerders <rhyme label="b" type="m">goet</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Ons al bereydt van te <rhyme label="a" type="f" corresp="#s3:l1">vooren</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Dat zy ons souden nemen in haer <rhyme label="b" type="m" corresp="#s3:l2">behoet</rhyme></l>
        <l id="s3:l5" met="4" type="-+">Soo ghy O Engelen altijt <rhyme label="b" type="m" corresp="#s3:l2">doet</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Gods beuel wilt ghy nae <rhyme label="a" type="f" corresp="#s3:l1">spooren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ghy hebt, O Heer, drie <rhyme label="a" type="f">regimenten</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Van Engelen voor ons <rhyme label="b" type="m">bereyt</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Daer d’een bouen d’ander seer <rhyme label="a" type="f" corresp="#s4:l1">exelenten</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Al wercken onse <rhyme label="b" type="m" corresp="#s4:l2">salicheyt</rhyme>,</l>
        <l id="s4:l5" met="4" type="-+">Sy doen oock haer <rhyme label="b" type="m" corresp="#s4:l2">arrebeyt</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Ons te regeeren die <rhyme label="a" type="f" corresp="#s4:l1">Elementen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Dese in schoonheyt seer veel <rhyme label="a" type="f">verscheelen</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Ende elck heeft drie Coren <rhyme label="b" type="m">schoon</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Dat maeckt neghen int <rhyme label="a" type="f" corresp="#s5:l1">geheelen</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Dese staen elck in haren <rhyme label="b" type="m" corresp="#s5:l2">thoon</rhyme></l>
        <l id="s5:l5" met="4" type="-+">Ten dienst van Godt, en zynen <rhyme label="b" type="m" corresp="#s5:l2">Soon</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Om te doen na zyn <rhyme label="a" type="f" corresp="#s5:l1">beuelen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Wy roepen tot v ghy Engelen des <rhyme label="a" type="f">Heeren</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Ende Archangelen <rhyme label="b" type="m">allegaer</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Ghy Virtuten vol van <rhyme label="a" type="f" corresp="#s6:l1">eeren</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Voorts ghy Princepaten <rhyme label="b" type="m" corresp="#s6:l2">claer</rhyme></l>
        <l id="s6:l5" met="4" type="-+">Ende oock ghy Potestaten zeer <rhyme label="b" type="m" corresp="#s6:l2">eerbaer</rhyme></l>
        <l id="s6:l6" met="3" type="-+">Helpt ons duecht <rhyme label="a" type="f" corresp="#s6:l1">vermeeren</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Ghy dominatien, ende <rhyme label="a" type="f">Throonen</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Oock mede ghy Engelen <rhyme label="b" type="m">Cerubim</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Die daer zijt zoo wonder <rhyme label="a" type="f" corresp="#s7:l1">schoonen</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Voorts ghy hoochste <rhyme label="b" type="m" corresp="#s7:l2">Seraphim</rhyme></l>
        <l id="s7:l5" met="4" type="-+">Die in Gods liefde brandende <rhyme label="b" type="m" corresp="#s7:l2">zijn</rhyme></l>
        <l id="s7:l6" met="3" type="-+">En altoos by Godt <rhyme label="a" type="f" corresp="#s7:l1">woonen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Al zijt ghy seer hooch, en heerlijck <rhyme label="a" type="f">verheuen</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Dat ghy staet voor Gods <rhyme label="b" type="m">aenschijn</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Want dat is v daer <rhyme label="a" type="f" corresp="#s8:l1">ghegeuen</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Te aenschouwen Gods glorie <rhyme label="b" type="m" corresp="#s8:l2">fijn</rhyme></l>
        <l id="s8:l5" met="4" type="-+">Voor syn aensicht sy brandende <rhyme label="b" type="m" corresp="#s8:l2">sijn</rhyme></l>
        <l id="s8:l6" met="3" type="-+">Al in dat eewighe <rhyme label="a" type="f" corresp="#s8:l1">leuen</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">O Michael Ouerste van al dese <rhyme label="a" type="f">oorden</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Ghy hadt v vroom voor Godes <rhyme label="b" type="m">eer</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Foen Lucefer zyn stoel int <rhyme label="a" type="f" corresp="#s9:l1">noorden</rhyme></l>
        <l id="s9:l4" met="4" type="-+">Wilde doen setten nae zyn <rhyme label="b" type="m" corresp="#s9:l2">begeer</rhyme>,</l>
        <l id="s9:l5" met="4" type="-+">Ghelyck den hoochsten hy doen geern <rhyme label="b" type="m" corresp="#s9:l2">weer</rhyme></l>
        <l id="s9:l6" met="3" type="-+">Doen ghy hem van daer <rhyme label="a" type="f" corresp="#s9:l1">verstoorden</rhyme></l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Alsoo ghy eens voor Gods eer hebt <rhyme label="a" type="f">ghestreden</rhyme></l>
        <l id="s10:l2" met="4" type="-+">Coemt ons toch nu te <rhyme label="b" type="m">baet</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Ten minsten met v <rhyme label="a" type="f" corresp="#s10:l1">ghebeden</rhyme></l>
        <l id="s10:l4" met="4" type="-+">Want als een Prince ghy voor dien <rhyme label="b" type="m" corresp="#s10:l2">staet</rhyme></l>
        <l id="s10:l5" met="4" type="-+">Die daer is ons <rhyme label="b" type="m" corresp="#s10:l2">aduocaet</rhyme>,</l>
        <l id="s10:l6" met="3" type="-+">Voor den Vader vol <rhyme label="a" type="f" corresp="#s10:l1">weerdicheden</rhyme>.</l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">V Engelen, O heer die sijn <rhyme label="a" type="f">sorchuuldich</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Om ons te bewaren voor <rhyme label="b" type="m">swaricheyt</rhyme></l>
        <l id="s11:l3" met="3" type="-+">Besonder die daer syn <rhyme label="a" type="f" corresp="#s11:l1">verduldich</rhyme>,</l>
        <l id="s11:l4" met="4" type="-+">Ende onnoosel door <rhyme label="b" type="m" corresp="#s11:l2">simpelheyt</rhyme></l>
        <l id="s11:l5" met="4" type="-+">Want zy zien Gods aensicht, soo Cristus <rhyme label="b" type="m" corresp="#s11:l2">seyt</rhyme></l>
        <l id="s11:l6" met="3" type="-+">Altijt voor ons <rhyme label="a" type="f" corresp="#s11:l1">eenvuldich</rhyme></l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Als wy reysen om goede, ende salighe <rhyme label="a" type="f">saecken</rhyme></l>
        <l id="s12:l2" met="4" type="-+">Soo volghen zy ons dan altoos <rhyme label="b" type="m">nae</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">Wanneer wy oock bidden ende <rhyme label="a" type="f" corresp="#s12:l1">waecken</rhyme></l>
        <l id="s12:l4" met="4" type="-+">Sy slaen onse wandel altoos <rhyme label="b" type="m" corresp="#s12:l2">gae</rhyme></l>
        <l id="s12:l5" met="4" type="-+">Als wy den armen oock by <rhyme label="b" type="m" corresp="#s12:l2">stae</rhyme></l>
        <l id="s12:l6" met="3" type="-+">Godt sy dit al kundich <rhyme label="a" type="f" corresp="#s12:l1">maecken</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Als een sondaer hem tot Godt doet <rhyme label="a" type="f">bekeeren</rhyme></l>
        <l id="s13:l2" met="4" type="-+">Soo syn sy altsamen daer door <rhyme label="b" type="m">verblijt</rhyme></l>
        <l id="s13:l3" met="3" type="-+">Veele duechden dat zy ons <rhyme label="a" type="f" corresp="#s13:l1">leeren</rhyme>,</l>
        <l id="s13:l4" met="4" type="-+">Al ist datmen haer niet en <rhyme label="b" type="m" corresp="#s13:l2">ziet</rhyme></l>
        <l id="s13:l5" met="4" type="-+">Sy syn by ons nochtans <rhyme label="b" type="m" corresp="#s13:l2">altijt</rhyme></l>
        <l id="s13:l6" met="3" type="-+">Onse salicheyt sy seer <rhyme label="a" type="f" corresp="#s13:l1">begeeren</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Als wy nu wt deser werelt moeten <rhyme label="a" type="f">scheyden</rhyme></l>
        <l id="s14:l2" met="4" type="-+">Soo syn sy by ons met claerheyt <rhyme label="b" type="m">schoon</rhyme></l>
        <l id="s14:l3" met="3" type="-+">Om onse ziele te <rhyme label="a" type="f" corresp="#s14:l1">gheleyden</rhyme>,</l>
        <l id="s14:l4" met="4" type="-+">Al voor Gods oordeel, en zynen <rhyme label="b" type="m" corresp="#s14:l2">throon</rhyme></l>
        <l id="s14:l5" met="4" type="-+">Om daer te ontfanghen onsen <rhyme label="b" type="m" corresp="#s14:l2">loon</rhyme></l>
        <l id="s14:l6" met="3" type="-+">Nae onse salicheyt zy <rhyme label="a" type="f" corresp="#s14:l1">verbeyden</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">O H. Michael, met al v lieue <rhyme label="a" type="f">ondersaten</rhyme></l>
        <l id="s15:l2" met="4" type="-+">Helpt ons doch door v liefde <rhyme label="b" type="m">goet</rhyme></l>
        <l id="s15:l3" met="3" type="-+">Ghy Archangelen en <rhyme label="a" type="f" corresp="#s15:l1">Potestaten</rhyme></l>
        <l id="s15:l4" met="4" type="-+">Valt voor ons den Heer te <rhyme label="b" type="m" corresp="#s15:l2">voet</rhyme></l>
        <l id="s15:l5" met="4" type="-+">Neemt ons doch in uwe <rhyme label="b" type="m" corresp="#s15:l2">behoet</rhyme></l>
        <l id="s15:l6" met="3" type="-+">Al ghy Engelen, en <rhyme label="a" type="f" corresp="#s15:l1">Princepaten</rhyme></l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Ghy hebt eertijts vroom <rhyme label="a" type="f">ghestreden</rhyme></l>
        <l id="s16:l2" met="4" type="-+">O Heylighe Prince. S. <rhyme label="b" type="m">Michiel</rhyme></l>
        <l id="s16:l3" met="3" type="-+">Anderen hebben <rhyme label="a" type="f" corresp="#s16:l1">ghebeden</rhyme>,</l>
        <l id="s16:l4" met="4" type="-+">Voor Ierusalem Gods <rhyme label="b" type="m" corresp="#s16:l2">pryel</rhyme></l>
        <l id="s16:l5" met="4" type="-+">Wy beuelen v oock onse <rhyme label="b" type="m" corresp="#s16:l2">ziel</rhyme></l>
        <l id="s16:l6" met="3" type="-+">En der Heyliger Kercken <rhyme label="a" type="f" corresp="#s16:l1">vreden</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

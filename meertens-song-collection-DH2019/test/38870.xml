  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">WIe zoud't buyten leven <rhyme label="a" type="f">haeten</rhyme>,</l>
        <l id="s1:l2" met="4" type="+-">'t Is een leven vol van <rhyme label="b" type="m">vreught</rhyme></l>
        <l id="s1:l3" met="4" type="+-">Daer de Voghelkens <rhyme label="a" type="f" corresp="#s1:l1">vermaecken</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">d'Herten van de jonghe <rhyme label="b" type="m" corresp="#s1:l2">Jeught</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Door het aenghenaeme <rhyme label="c" type="f">singhen</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Van den soeten <rhyme label="d" type="m">nachtergael</rhyme></l>
        <l id="s1:l7" met="4" type="+-">Hoort-men 'tdroef gezucht <rhyme label="c" type="f" corresp="#s1:l5">bedwingen</rhyme></l>
        <l id="s1:l8" met="4" type="+-">Tot een lievelijck <rhyme label="d" type="m" corresp="#s1:l6">gheschal</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Al heeft Mars den Ougst <rhyme label="a" type="f">geschoren</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Die den Landts-man heeft <rhyme label="b" type="m">ghezaeyt</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">'t Schynt hy is tot 't werck <rhyme label="a" type="f" corresp="#s2:l1">gheboren</rhyme>,</l>
        <l id="s2:l4" met="4" type="+-">Als hy eens syn Vruchten <rhyme label="b" type="m" corresp="#s2:l2">maeyt</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Is sijn droefheyt al <rhyme label="c" type="f">vergeten</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Voor sijn werck kryght hy dan <rhyme label="d" type="m">geldt</rhyme>,</l>
        <l id="s2:l7" met="4" type="+-">Met wel drincken en wel <rhyme label="c" type="f" corresp="#s2:l5">eten</rhyme>,</l>
        <l id="s2:l8" met="4" type="+-">Wordt den druck aen cant <rhyme label="d" type="m" corresp="#s2:l6">ghestelt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Men siet wonder vreught <rhyme label="a" type="f">gebeuren</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Als Bellona vlucht uyt 't <rhyme label="b" type="m">veldt</rhyme></l>
        <l id="s3:l3" met="4" type="+-">En als Mars gaet droevigh <rhyme label="a" type="f" corresp="#s3:l1">treuren</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">Ceres wordt in rust <rhyme label="b" type="m" corresp="#s3:l2">ghestelt</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Dan siet-men den Landts man <rhyme label="c" type="f">swieren</rhyme></l>
        <l id="s3:l6" met="4" type="+-">In het lommer groene <rhyme label="d" type="m">waut</rhyme>,</l>
        <l id="s3:l7" met="4" type="+-">Daer de Vogels <rhyme label="c" type="f" corresp="#s3:l5">tierelieren</rhyme>,</l>
        <l id="s3:l8" met="4" type="+-">Sy en zijn niet meet <rhyme label="d" type="m" corresp="#s3:l6">benauwt</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Wilt men backen wil men <rhyme label="a" type="f">brauwen</rhyme></l>
        <l id="s4:l2" met="4" type="+-">Siet den Landts-man is <rhyme label="b" type="m">bereedt</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Om het vruchtbaer Landt te <rhyme label="a" type="f" corresp="#s4:l1">bouwen</rhyme></l>
        <l id="s4:l4" met="4" type="+-">Hy en vreest noch koud' noch <rhyme label="b" type="m" corresp="#s4:l2">heet</rhyme>:</l>
        <l id="s4:l5" met="4" type="+-">Want den loon comt hem <rhyme label="c" type="f">verstercken</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Die hy eens genieten <rhyme label="d" type="m">sal</rhyme>,</l>
        <l id="s4:l7" met="4" type="+-">Voor syn slaven en syn <rhyme label="c" type="f" corresp="#s4:l5">wercken</rhyme>,</l>
        <l id="s4:l8" met="4" type="+-">Den loon die verzoet het <rhyme label="d" type="m" corresp="#s4:l6">al</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Siet de Vrauwkens met <rhyme label="a" type="f">genuchten</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Weten constigh met haer <rhyme label="b" type="m">handt</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">Al zoetsingende de <rhyme label="a" type="f" corresp="#s5:l1">Vrughten</rhyme>,</l>
        <l id="s5:l4" met="4" type="+-">Vanden Vlasschert op het <rhyme label="b" type="m" corresp="#s5:l2">landt</rhyme></l>
        <l id="s5:l5" met="4" type="+-">Voor een ider te <rhyme label="c" type="f">bereyden</rhyme>,</l>
        <l id="s5:l6" met="4" type="+-">Tot ghebruyck van cleyn en <rhyme label="d" type="m">groot</rhyme>,</l>
        <l id="s5:l7" met="4" type="+-">Men moet hunnen lof <rhyme label="c" type="f" corresp="#s5:l5">verbreyden</rhyme>,</l>
        <l id="s5:l8" met="4" type="+-">Die ons helpen uyt den <rhyme label="d" type="m" corresp="#s5:l6">noodt</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Wilt dan al den Landts-man <rhyme label="a" type="f">prysen</rhyme></l>
        <l id="s6:l2" met="4" type="+-">Die door const uyt aerd' en <rhyme label="b" type="m">stof</rhyme></l>
        <l id="s6:l3" met="4" type="+-">Levens middelen op doet <rhyme label="a" type="f" corresp="#s6:l1">rysen</rhyme>,</l>
        <l id="s6:l4" met="4" type="+-">'t Is des, buyte-levens <rhyme label="b" type="m" corresp="#s6:l2">Lof</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Dat den Landts-man niet en <rhyme label="c" type="f">zaeyde</rhyme>,</l>
        <l id="s6:l6" met="4" type="+-">'t VVaer met ons al lanck <rhyme label="d" type="m">gedaen</rhyme>,</l>
        <l id="s6:l7" met="4" type="+-">Niet een Haentjen datter <rhyme label="c" type="f" corresp="#s6:l5">kraeyde</rhyme></l>
        <l id="s6:l8" met="4" type="+-">'t Zoud' door hongers noodt <rhyme label="d" type="m" corresp="#s6:l6">vergaen</rhyme>.</l>
      </lg>
    </lg>
  </text>

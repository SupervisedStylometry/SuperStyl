    <tags>
      <tag standard-name="geestelijk lied" translation="spiritual song">Geestelijk lied</tag>
    </tags>
    <melody>Een meisje had een ruiter lief</melody>
    <categories/>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">GHenade vrede seer <rhyme label="a" type="m">verblijdt</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Wensch ick Godts volck nu ter <rhyme label="a" type="m" corresp="#s1:l1">tijdt</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Als nu tot deser <rhyme label="b" type="f">stede</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Veel cracht des Gheestes <rhyme label="b" type="f" corresp="#s1:l3">mede</rhyme>,</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Met alle die ghecomen <rhyme label="a" type="m">sijn</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Tot die ghemeenschap der Heylighen <rhyme label="a" type="m" corresp="#s2:l1">fijn</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Ghedoopt tot een <rhyme label="b" type="f">lichame</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Verandert seer <rhyme label="b" type="f" corresp="#s2:l3">bequame</rhyme>,</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Van 't oude leven uyt <rhyme label="a" type="m">ghetreen</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Te wandelen met Christo <rhyme label="a" type="m" corresp="#s3:l1">heen</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Als nieuwe <rhyme label="b" type="f">creaturen</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Soo langh ons daghen <rhyme label="b" type="f" corresp="#s3:l3">dueren</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Wilt neerstigh letten op het <rhyme label="a" type="m">woordt</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Van desen propheet met <rhyme label="a" type="m" corresp="#s4:l1">accoort</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Als op een licht <rhyme label="b" type="f">ghepresen</rhyme></l>
        <l id="s4:l4" met="3" type="-+">In duysternis <rhyme label="b" type="f" corresp="#s4:l3">gheresen</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Ist dat wy nu ontsteecken <rhyme label="a" type="m">sijn</rhyme></l>
        <l id="s5:l2" met="4" type="-+">Door 't ware licht van Christo <rhyme label="a" type="m" corresp="#s5:l1">fijn</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Dat moet nu aen ons <rhyme label="b" type="f">blijcken</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Of eenighsins <rhyme label="b" type="f" corresp="#s5:l3">ghelijcken</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">De Arcke Godts, hier wel op <rhyme label="a" type="m">let</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">Sy was van goude <rhyme label="a" type="m" corresp="#s6:l1">onbesmet</rhyme></l>
        <l id="s6:l3" met="3" type="-+">Over vueren hout <rhyme label="b" type="f">gheslaghen</rhyme>,</l>
        <l id="s6:l4" met="3" type="-+">Of wy dit beeldt al <rhyme label="b" type="f" corresp="#s6:l3">draghen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Een Christelijcke wandel <rhyme label="a" type="m">goet</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Men reyn aen ons bepeuren <rhyme label="a" type="m" corresp="#s7:l1">moet</rhyme></l>
        <l id="s7:l3" met="3" type="-+">Om soo in liefd' en <rhyme label="b" type="f">vrede</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Te houden <rhyme label="b" type="f" corresp="#s7:l3">eenighede</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">O ghy ghedoopte na Christus <rhyme label="a" type="m">raedt</rhyme></l>
        <l id="s8:l2" met="4" type="-+">Ist dat het soo met ons niet <rhyme label="a" type="m" corresp="#s8:l1">staet</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Recht na den gheest, wilt <rhyme label="b" type="f">weten</rhyme>,</l>
        <l id="s8:l4" met="3" type="-+">Christum wy niet en <rhyme label="b" type="f" corresp="#s8:l3">eten</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">Laet ons eens recht bedencken <rhyme label="a" type="m">wis</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Hoe Christus lichaem ghebroocken <rhyme label="a" type="m" corresp="#s9:l1">is</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Met veel <rhyme label="b" type="f">Martelisacy</rhyme></l>
        <l id="s9:l4" met="3" type="-+">Om ons te brenghen <rhyme label="b" type="f" corresp="#s9:l3">gracy</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="-+">Dus most hy lijden in veel <rhyme label="a" type="m">smert</rhyme>,</l>
        <l id="s10:l2" met="4" type="-+">Eer dat hy ons een spijse <rhyme label="a" type="m" corresp="#s10:l1">werdt</rhyme></l>
        <l id="s10:l3" met="3" type="-+">Van hem alsoo <rhyme label="b" type="f">gheleecken</rhyme>,</l>
        <l id="s10:l4" met="3" type="-+">Doen hy het broodt gingh <rhyme label="b" type="f" corresp="#s10:l3">breecken</rhyme></l>
      </lg>
      <lg id="s11" type="stanza">
        <l id="s11:l1" met="4" type="-+">Hy nam het broodt en sprack <rhyme label="a" type="m">bequaem</rhyme></l>
        <l id="s11:l2" met="4" type="-+">Neemt ende eet, dits mijn <rhyme label="a" type="m" corresp="#s11:l1">lichaem</rhyme>,</l>
        <l id="s11:l3" met="3" type="-+">Dat voor u werdt <rhyme label="b" type="f">ghegheven</rhyme>,</l>
        <l id="s11:l4" met="3" type="-+">Danckbaer wilt hem <rhyme label="b" type="f" corresp="#s11:l3">aenkleven</rhyme>.</l>
      </lg>
      <lg id="s12" type="stanza">
        <l id="s12:l1" met="4" type="-+">Doen danckte hy sijn lieven <rhyme label="a" type="m">Vaer</rhyme>,</l>
        <l id="s12:l2" met="4" type="-+">Ia nam den Kelck en gafse <rhyme label="a" type="m" corresp="#s12:l1">haer</rhyme>,</l>
        <l id="s12:l3" met="3" type="-+">En sprack: wilt daer uyt <rhyme label="b" type="f">drincken</rhyme>,</l>
        <l id="s12:l4" met="3" type="-+">Voor velen gae ick <rhyme label="b" type="f" corresp="#s12:l3">schincken</rhyme>.</l>
      </lg>
      <lg id="s13" type="stanza">
        <l id="s13:l1" met="4" type="-+">Mijn bloet als een nieu <rhyme label="a" type="m">Testament</rhyme></l>
        <l id="s13:l2" met="4" type="-+">Voor u sonden, sijt dit <rhyme label="a" type="m" corresp="#s13:l1">bekent</rhyme>.</l>
        <l id="s13:l3" met="3" type="-+">Hierom wilt niet <rhyme label="b" type="f">vergheten</rhyme></l>
        <l id="s13:l4" met="3" type="-+">Mijn lijden in dit <rhyme label="b" type="f" corresp="#s13:l3">eten</rhyme>.</l>
      </lg>
      <lg id="s14" type="stanza">
        <l id="s14:l1" met="4" type="-+">Het teycken voor ooghen baet ons <rhyme label="a" type="m">niet</rhyme></l>
        <l id="s14:l2" met="4" type="-+">Sonder het ware wesen <rhyme label="a" type="m" corresp="#s14:l1">siet</rhyme>.</l>
        <l id="s14:l3" met="3" type="-+">Vrienden wilt recht <rhyme label="b" type="f">aenmercken</rhyme>,</l>
        <l id="s14:l4" met="3" type="-+">'t Sijn gheestelijcke <rhyme label="b" type="f" corresp="#s14:l3">wercken</rhyme>.</l>
      </lg>
      <lg id="s15" type="stanza">
        <l id="s15:l1" met="4" type="-+">O Heer soo roepen wy u <rhyme label="a" type="m">aen</rhyme>,</l>
        <l id="s15:l2" met="4" type="-+">Met uwen Gheest wilt ons <rhyme label="a" type="m" corresp="#s15:l1">bystaen</rhyme>.</l>
        <l id="s15:l3" met="3" type="-+">V weghen wilt ons <rhyme label="b" type="f">leeren</rhyme>,</l>
        <l id="s15:l4" met="3" type="-+">En ons gheloof <rhyme label="b" type="f" corresp="#s15:l3">vermeeren</rhyme>.</l>
      </lg>
      <lg id="s16" type="stanza">
        <l id="s16:l1" met="4" type="-+">Sterckt oock u dienaer, lieve <rhyme label="a" type="m">Heer</rhyme>,</l>
        <l id="s16:l2" met="4" type="-+">Om uyt te breyden u rechte <rhyme label="a" type="m" corresp="#s16:l1">leer</rhyme>,</l>
        <l id="s16:l3" met="3" type="-+">Tot lof en eer <rhyme label="b" type="f">bequame</rhyme></l>
        <l id="s16:l4" met="3" type="-+">Alleen van uwen <rhyme label="b" type="f" corresp="#s16:l3">name</rhyme>.</l>
      </lg>
      <lg id="s17" type="stanza">
        <l id="s17:l1" met="4" type="-+">En onse herten in <rhyme label="a" type="m">ootmoet</rhyme></l>
        <l id="s17:l2" met="4" type="-+">Met Lydia doch open <rhyme label="a" type="m" corresp="#s17:l1">doet</rhyme>,</l>
        <l id="s17:l3" met="3" type="-+">En maeckt oock onse <rhyme label="b" type="f">ooren</rhyme></l>
        <l id="s17:l4" met="3" type="-+">Bequaem om wel te <rhyme label="b" type="f" corresp="#s17:l3">hooren</rhyme>.</l>
      </lg>
      <lg id="s18" type="stanza">
        <l id="s18:l1" met="4" type="-+">Op dat ons leven werdt <rhyme label="a" type="m">gheleydt</rhyme></l>
        <l id="s18:l2" met="4" type="-+">Voor u in rechte <rhyme label="a" type="m" corresp="#s18:l1">ghehoorsaemheyt</rhyme>,</l>
        <l id="s18:l3" met="3" type="-+">Soo moghen wy <rhyme label="b" type="f">verlanghen</rhyme></l>
        <l id="s18:l4" met="3" type="-+">Van u te sijn <rhyme label="b" type="f" corresp="#s18:l3">ontfanghen</rhyme>.</l>
      </lg>
      <lg id="s19" type="stanza">
        <l id="s19:l1" met="4" type="-+">Daer ghy ons hebt belooft <rhyme label="a" type="m">ydoon</rhyme></l>
        <l id="s19:l2" met="4" type="-+">Te dienen aen u tafel <rhyme label="a" type="m" corresp="#s19:l1">schoon</rhyme></l>
        <l id="s19:l3" met="3" type="-+">Met alle Hemelsche <rhyme label="b" type="f">scharen</rhyme>,</l>
        <l id="s19:l4" met="3" type="-+">Daer wy soo gheeren <rhyme label="b" type="f" corresp="#s19:l3">waren</rhyme>.</l>
      </lg>
      <lg id="s20" type="stanza">
        <l id="s20:l1" met="4" type="-+">Dan sullen wy met soet <rhyme label="a" type="m">aenschijn</rhyme></l>
        <l id="s20:l2" met="4" type="-+">Van u ontfangen den nieuwen <rhyme label="a" type="m" corresp="#s20:l1">wijn</rhyme>,</l>
        <l id="s20:l3" met="3" type="-+">Niet meer stuckwijs als <rhyme label="b" type="f">desen</rhyme>,</l>
        <l id="s20:l4" met="3" type="-+">Maer in een eeuwigh <rhyme label="b" type="f" corresp="#s20:l3">wesen</rhyme>,</l>
      </lg>
      <lg id="s21" type="stanza">
        <l id="s21:l1" met="4" type="-+">En singen dan in uwen <rhyme label="a" type="m">troon</rhyme></l>
        <l id="s21:l2" met="4" type="-+">Blijde lofsanghen alsoo <rhyme label="a" type="m" corresp="#s21:l1">schoon</rhyme>,</l>
        <l id="s21:l3" met="3" type="-+">Niet wederom te <rhyme label="b" type="f">scheyden</rhyme></l>
        <l id="s21:l4" met="3" type="-+">Maer eeuwighlijck <rhyme label="b" type="f" corresp="#s21:l3">vermeyden</rhyme>.</l>
      </lg>
      <lg id="s22" type="stanza">
        <l id="s22:l1" met="4" type="-+">O Prince Vader ende <rhyme label="a" type="m">Heer</rhyme></l>
        <l id="s22:l2" met="4" type="-+">Wilt ons verlaten <rhyme label="a" type="m" corresp="#s22:l1">nimmermeer</rhyme>,</l>
        <l id="s22:l3" met="3" type="-+">Weest by ons na den <rhyme label="b" type="f">Gheeste</rhyme></l>
        <l id="s22:l4" met="3" type="-+">In desen <rhyme label="b" type="f" corresp="#s22:l3">Lover-feeste</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

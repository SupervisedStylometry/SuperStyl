  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">EEn Seraphinsche <rhyme label="a" type="f">tonghe</rhyme></l>
        <l id="s1:l2" met="3" type="-+">My nu wel dient <rhyme label="b" type="m">voorwaer</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">Een kele die wel <rhyme label="a" type="f" corresp="#s1:l1">songhe</rhyme></l>
        <l id="s1:l4" met="3" type="-+">Met soete stemme <rhyme label="b" type="m" corresp="#s1:l2">klaer</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Om t’kindeken soo <rhyme label="c" type="f">kleene</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Gheboren soomen <rhyme label="d" type="m">siet</rhyme></l>
        <l id="s1:l7" met="3" type="-+">Van eener maghet <rhyme label="c" type="f" corresp="#s1:l5">reene</rhyme>,</l>
        <l id="s1:l8" met="3" type="-+">Te louen met een <rhyme label="d" type="m" corresp="#s1:l6">liedt</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Sijn twee bruyn ooghkens <rhyme label="a" type="f">schoone</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">En sijn mondeken <rhyme label="b" type="m">root</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Sijn ledekens <rhyme label="a" type="f" corresp="#s2:l1">idoone</rhyme>,</l>
        <l id="s2:l4" met="3" type="-+">Sijn handekens <rhyme label="b" type="m" corresp="#s2:l2">minioot</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Die tooghen ons de <rhyme label="c" type="f">wegehen</rhyme></l>
        <l id="s2:l6" met="3" type="-+">Die wy moeten <rhyme label="d" type="m">ingaen</rhyme>:</l>
        <l id="s2:l7" met="3" type="-+">Op dat wy al den <rhyme label="c" type="f" corresp="#s2:l5">seghen</rhyme></l>
        <l id="s2:l8" met="3" type="-+">Van hem moghen <rhyme label="d" type="m" corresp="#s2:l6">ontfaen</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Sijn lief aenschijn <rhyme label="a" type="f">ghepresen</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Sijn graci’ <rhyme label="b" type="m">aldermeest</rhyme></l>
        <l id="s3:l3" met="3" type="-+">In sijn kinderlijck <rhyme label="a" type="f" corresp="#s3:l1">wesen</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Verheucht my inden <rhyme label="b" type="m" corresp="#s3:l2">gheest</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">En soo ick wel <rhyme label="c" type="f">aenschauwe</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Hy is gheheel <rhyme label="d" type="m">ghelijck</rhyme></l>
        <l id="s3:l7" met="3" type="-+">Sijn moeder onse <rhyme label="c" type="f" corresp="#s3:l5">Vrauwe</rhyme>,</l>
        <l id="s3:l8" met="3" type="-+">In goe manieren <rhyme label="d" type="m" corresp="#s3:l6">rijck</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Ghe-eert zy dan de <rhyme label="a" type="f">moeder</rhyme></l>
        <l id="s4:l2" met="3" type="-+">Nu en t’allen <rhyme label="b" type="m">termijn</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">Die ‘tkint onsen <rhyme label="a" type="f" corresp="#s4:l1">behoeder</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Ghebaert heeft sonder <rhyme label="b" type="m" corresp="#s4:l2">pijn</rhyme>:</l>
        <l id="s4:l5" met="3" type="-+">Glori’ zy Godt <rhyme label="c" type="f">ghegheuen</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">Den menschen peys al <rhyme label="d" type="m">hier</rhyme></l>
        <l id="s4:l7" met="3" type="-+">Die op der aerden <rhyme label="c" type="f" corresp="#s4:l5">leuen</rhyme></l>
        <l id="s4:l8" met="3" type="-+">Van wille <rhyme label="d" type="m" corresp="#s4:l6">goedertier</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">O Iesu soeten <rhyme label="a" type="f">naeme</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Ons troost, ons <rhyme label="b" type="m">toeuerlaet</rhyme>,</l>
        <l id="s5:l3" met="3" type="-+">Ons verlosser <rhyme label="a" type="f" corresp="#s5:l1">bequaeme</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Aenmerckt ons simpel <rhyme label="b" type="m" corresp="#s5:l2">daet</rhyme>:</l>
        <l id="s5:l5" met="3" type="-+">Wilt door v liefd’ <rhyme label="c" type="f">aenveerden</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Ons herte voor <rhyme label="d" type="m">present</rhyme>:</l>
        <l id="s5:l7" met="3" type="-+">Al zijn wy kleen van <rhyme label="c" type="f" corresp="#s5:l5">weerden</rhyme>,</l>
        <l id="s5:l8" met="3" type="-+">O Heer’ tis v <rhyme label="d" type="m" corresp="#s5:l6">bekent</rhyme>.</l>
      </lg>
    </lg>
  </text>

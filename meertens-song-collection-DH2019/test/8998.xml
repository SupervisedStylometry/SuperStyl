<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>8998</id>
    <date>
      <year-start>1625</year-start>
      <year-end>1625</year-end>
    </date>
    <location>
      <orginal-name>utrecht</orginal-name>
      <standard-name>Utrecht, The Netherlands</standard-name>
      <coordinates>
        <lon>52.0949753</lon>
        <lat>5.109708</lat>
      </coordinates>
    </location>
    <tags>
      <tag standard-name="loflied" translation="praise song">loflied</tag>
    </tags>
    <melody>Herr Christ der einig Gottes Sohn</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">HEer Christ ghy Eenig' Godes <rhyme label="a" type="m">Soon</rhyme></l>
        <l id="s1:l2" met="3" type="-+">Vaders in <rhyme label="b" type="m">Eewicheyt</rhyme>,</l>
        <l id="s1:l3" met="4" type="-+">Wt syn Herte ghesproten <rhyme label="a" type="m" corresp="#s1:l1">schoon</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">Als die Schriftuere <rhyme label="b" type="m" corresp="#s1:l2">seyt</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">Hy is die <rhyme label="c" type="f">Morghensteerne</rhyme>,</l>
        <l id="s1:l6" met="3" type="-+">Syn claerheyt streckt sy <rhyme label="c" type="f" corresp="#s1:l5">veerne</rhyme>,</l>
        <l id="s1:l7" met="3" type="-+">Voor ander Steernen <rhyme label="d" type="m">Claer</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Voor ons een Mensch <rhyme label="a" type="m">gheboren</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Hier in der laetsten <rhyme label="b" type="m">Tijdt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">De Moeder niet <rhyme label="a" type="m" corresp="#s2:l1">verloren</rhyme></l>
        <l id="s2:l4" met="3" type="-+">Haer Maechd'lijcke <rhyme label="b" type="m" corresp="#s2:l2">Cuysheyt</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Den doot voor ons <rhyme label="c" type="f">ghebroken</rhyme>,</l>
        <l id="s2:l6" met="3" type="-+">Den HEmel <rhyme label="c" type="f" corresp="#s2:l5">Opghesloten</rhyme>,</l>
        <l id="s2:l7" met="3" type="-+">En d' Leven weder <rhyme label="d" type="m">brocht</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Laet ons in dijner <rhyme label="a" type="m">Lieve</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">End Kennis nemen <rhyme label="b" type="m">toe</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Int recht Gheloove <rhyme label="a" type="m" corresp="#s3:l1">blijven</rhyme>,</l>
        <l id="s3:l4" met="3" type="-+">Dienen in Gheeste <rhyme label="b" type="m" corresp="#s3:l2">so</rhyme>,</l>
        <l id="s3:l5" met="3" type="-+">Dat wy hier moghen <rhyme label="c" type="f">smaecken</rhyme></l>
        <l id="s3:l6" met="3" type="-+">Dijn soeticheyt nae <rhyme label="c" type="f" corresp="#s3:l5">haecken</rhyme>,</l>
        <l id="s3:l7" met="3" type="-+">End Dorsten steedts nae <rhyme label="d" type="m">dy</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Ghy Schepper aller <rhyme label="a" type="m">Dinghe</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Ghy Vaderlijcke <rhyme label="b" type="m">Cracht</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Regiert van <rhyme label="a" type="m" corresp="#s4:l1">Aenbeginne</rhyme>,</l>
        <l id="s4:l4" met="3" type="-+">Crachtich wt eyg'ner <rhyme label="b" type="m" corresp="#s4:l2">Macht</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Dat Hert ons tot dy <rhyme label="c" type="f">winne</rhyme>,</l>
        <l id="s4:l6" met="3" type="-+">End keert aff onse <rhyme label="c" type="f" corresp="#s4:l5">sinne</rhyme>,</l>
        <l id="s4:l7" met="3" type="-+">Dat sy niet Dwalen van <rhyme label="d" type="m">dy</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Dood' ons door dijne <rhyme label="a" type="m">Goede</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Verweck ons door dijn <rhyme label="b" type="m">Gnaed'</rhyme>,</l>
        <l id="s5:l3" met="4" type="-+">Den Ouden Menschen <rhyme label="a" type="m" corresp="#s5:l1">krencke</rhyme></l>
        <l id="s5:l4" met="3" type="-+">Dat die Nieuwe leven <rhyme label="b" type="m" corresp="#s5:l2">mach</rhyme>,</l>
        <l id="s5:l5" met="3" type="-+">Al hier op deser <rhyme label="c" type="f">Aerden</rhyme>,</l>
        <l id="s5:l6" met="3" type="-+">Den sinn' end alle <rhyme label="c" type="f" corresp="#s5:l5">begeerden</rhyme>,</l>
        <l id="s5:l7" met="3" type="-+">End Ghedancken staen tot <rhyme label="d" type="m">dy</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

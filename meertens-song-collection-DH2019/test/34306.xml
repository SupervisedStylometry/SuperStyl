  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">VVIe kompt ons hier aen <rhyme label="a" type="f">getreden</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Netter als een <rhyme label="b" type="m">Tortelduyf</rhyme>?</l>
        <l id="s1:l3" met="4" type="+-">Soeter als een rype <rhyme label="b" type="m" corresp="#s1:l2">druyf</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Wyser als de Maeghden <rhyme label="a" type="f" corresp="#s1:l1">heden</rhyme>,</l>
        <l id="s1:l5" met="4" type="+-">Schoonder als het volck van <rhyme label="c" type="m">Geth</rhyme>?</l>
        <l id="s1:l6" met="4" type="+-">'t Is, het is <rhyme label="c" type="m" corresp="#s1:l5">Elisabeth</rhyme>:</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Christi Bruydt mach ick u <rhyme label="a" type="f">prysens</rhyme>,</l>
        <l id="s2:l2" met="4" type="+-">Ick groet u met blyder <rhyme label="b" type="m">stem</rhyme></l>
        <l id="s2:l3" met="4" type="+-">Dochter van <rhyme label="b" type="m" corresp="#s2:l2">Jerusalem</rhyme>:</l>
        <l id="s2:l4" met="4" type="+-">Maer mach ick u <rhyme label="a" type="f" corresp="#s2:l1">onderwysen</rhyme></l>
        <l id="s2:l5" met="4" type="+-">Sonder stooren uwe <rhyme label="c" type="m">wegh</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">Hoort toch, hoort eens wat ick <rhyme label="c" type="m" corresp="#s2:l5">segh</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Heden gaedy seker <rhyme label="a" type="f">varen</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Uyt de werelt in een <rhyme label="b" type="m">hof</rhyme>.</l>
        <l id="s3:l3" met="4" type="+-">(Begga dit is uwe <rhyme label="b" type="m" corresp="#s3:l2">lof</rhyme>)</l>
        <l id="s3:l4" met="4" type="+-">Wildy uwe glans <rhyme label="a" type="f" corresp="#s3:l1">bewaren</rhyme>,</l>
        <l id="s3:l5" met="4" type="+-">Sluyt, en slaet n hofken <rhyme label="c" type="m">gae</rhyme></l>
        <l id="s3:l6" met="4" type="+-">'s Mergens vroegh, en savondts <rhyme label="c" type="m" corresp="#s3:l5">spac</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Souwen al u vruchten <rhyme label="a" type="f">duren</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">En u vreughden, Jonge <rhyme label="b" type="m">boom</rhyme></l>
        <l id="s4:l3" met="4" type="+-">Houdt u sinnen in den <rhyme label="b" type="m" corresp="#s4:l2">toom</rhyme>;</l>
        <l id="s4:l4" met="4" type="+-">Houdt u tacken in de <rhyme label="a" type="f" corresp="#s4:l1">muren</rhyme>:</l>
        <l id="s4:l5" met="4" type="+-">Want geloof my, op de <rhyme label="c" type="m">straet</rhyme></l>
        <l id="s4:l6" met="4" type="+-">En is niet, dan alle <rhyme label="c" type="m" corresp="#s4:l5">quaet</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">Dina swierde eens te <rhyme label="a" type="f">voren</rhyme>,</l>
        <l id="s5:l2" met="4" type="+-">Of ter zyden <rhyme label="b" type="m">onbekent</rhyme>:</l>
        <l id="s5:l3" met="4" type="+-">Maer ons Dina uyt haer <rhyme label="b" type="m" corresp="#s5:l2">Tent</rhyme></l>
        <l id="s5:l4" met="4" type="+-">Heeft haer blommeken <rhyme label="a" type="f" corresp="#s5:l1">verloren</rhyme>.</l>
        <l id="s5:l5" met="4" type="+-">Binnen is de ziele <rhyme label="c" type="m">vry</rhyme>;</l>
        <l id="s5:l6" met="4" type="+-">Buyten daer verliesen <rhyme label="c" type="m" corresp="#s5:l5">wy</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Laet dan alle <rhyme label="a" type="f">Creaturen</rhyme>.</l>
        <l id="s6:l2" met="4" type="+-">Christus zy al uwe <rhyme label="b" type="m">wensch</rhyme>:</l>
        <l id="s6:l3" met="4" type="+-">Oeffent uwen g'heele <rhyme label="b" type="m" corresp="#s6:l2">mensch</rhyme></l>
        <l id="s6:l4" met="4" type="+-">In hem rusten, in hem <rhyme label="a" type="f" corresp="#s6:l1">ruren</rhyme>,</l>
        <l id="s6:l5" met="4" type="+-">Christus, en zyn hyligh <rhyme label="c" type="m">Cruys</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Zy u hof, en zy u <rhyme label="c" type="m" corresp="#s6:l5">huys</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="+-">hier syn ommers veel <rhyme label="a" type="f">zaletten</rhyme>:</l>
        <l id="s7:l2" met="4" type="+-">Voeten, handen, waer wy <rhyme label="b" type="m">sien</rhyme></l>
        <l id="s7:l3" met="4" type="+-">Staen al open voor de <rhyme label="b" type="m" corresp="#s7:l2">lien</rhyme>.</l>
        <l id="s7:l4" met="4" type="+-">Hier op moeten wy wel <rhyme label="a" type="f" corresp="#s7:l1">letten</rhyme>,</l>
        <l id="s7:l5" met="4" type="+-">En geweldigh <rhyme label="c" type="m">allegaer</rhyme></l>
        <l id="s7:l6" met="4" type="+-">Volgen onse Meester <rhyme label="c" type="m" corresp="#s7:l5">naer</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="+-">Sou het Bieken honich <rhyme label="a" type="f">malen</rhyme>,</l>
        <l id="s8:l2" met="4" type="+-">En verstandich op zyn <rhyme label="b" type="m">maet</rhyme></l>
        <l id="s8:l3" met="4" type="+-">Timmeren den <rhyme label="b" type="m" corresp="#s8:l2">honich-raet</rhyme>;</l>
        <l id="s8:l4" met="4" type="+-">Die moet zy gaen <rhyme label="a" type="f" corresp="#s8:l1">vlytich-halen</rhyme>,</l>
        <l id="s8:l5" met="4" type="+-">Herwaerts, derwaerts, <rhyme label="c" type="m">overal</rhyme>,</l>
        <l id="s8:l6" met="4" type="+-">Waer zy blomkens vinden <rhyme label="c" type="m" corresp="#s8:l5">sal</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="+-">Suyver herte syt te <rhyme label="a" type="f">vreden</rhyme>,</l>
        <l id="s9:l2" met="4" type="+-">En gaet niet te wyt van <rhyme label="b" type="m">hier</rhyme>;</l>
        <l id="s9:l3" met="4" type="+-">Jesus is een <rhyme label="b" type="m" corresp="#s9:l2">hovenier</rhyme>:</l>
        <l id="s9:l4" met="4" type="+-">Siet in alle zyne <rhyme label="a" type="f" corresp="#s9:l1">leden</rhyme></l>
        <l id="s9:l5" met="4" type="+-">Is hy bloedich: zyne <rhyme label="c" type="m">Naem</rhyme></l>
        <l id="s9:l6" met="4" type="+-">Is oock blommich, en <rhyme label="c" type="m" corresp="#s9:l5">bequaem</rhyme>.</l>
      </lg>
      <lg id="s10" type="stanza">
        <l id="s10:l1" met="4" type="+-">Al hadt ymandt hondert <rhyme label="a" type="f">monden</rhyme>.</l>
        <l id="s10:l2" met="4" type="+-">Hondert dusendt monden, <rhyme label="b" type="m">och</rhyme>!</l>
        <l id="s10:l3" met="4" type="+-">Hier is honich-douw <rhyme label="b" type="m" corresp="#s10:l2">genoch</rhyme>.</l>
        <l id="s10:l4" met="4" type="+-">Suyght, suyght Bieken, suyght dees won <rhyme label="a" type="f" corresp="#s10:l1">den</rhyme>;</l>
        <l id="s10:l5" met="4" type="+-">Proeft, en smaeckt hoe soet <rhyme label="c" type="m">gewis</rhyme>,</l>
        <l id="s10:l6" met="4" type="+-">Ah! hoe goet dat Jesus <rhyme label="c" type="m" corresp="#s10:l5">is</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

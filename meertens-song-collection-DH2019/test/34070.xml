    <melody>Het zou een jongman uit kouten gaan</melody>
    <categories>
      <category translation="seasons and annual events">jaarkring</category>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="+-">TOngh', ver-breyd de groote <rhyme label="a" type="f">glori'</rhyme></l>
        <l id="s1:l2" met="4" type="+-">Van het wel-gheluckt <rhyme label="b" type="m">ghevecht</rhyme>,</l>
        <l id="s1:l3" met="4" type="+-">En ver-kondight de <rhyme label="a" type="f" corresp="#s1:l1">victori'</rhyme>,</l>
        <l id="s1:l4" met="4" type="+-">Die aen 't kruys is op <rhyme label="b" type="m" corresp="#s1:l2">gherecht</rhyme>;</l>
        <l id="s1:l5" met="4" type="+-">Als daer kreegh de <rhyme label="c" type="m">over-hand</rhyme>,</l>
        <l id="s1:l6" met="4" type="+-">Die self was de <rhyme label="c" type="m" corresp="#s1:l5">offerand</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="+-">Adams Schepper door 't <rhyme label="a" type="f">mê-lyden</rhyme></l>
        <l id="s2:l2" met="4" type="+-">Over een bedrogh soo <rhyme label="b" type="m">snood</rhyme>,</l>
        <l id="s2:l3" met="4" type="+-">Als den appel hy door 't <rhyme label="a" type="f" corresp="#s2:l1">vlyden</rhyme></l>
        <l id="s2:l4" met="4" type="+-">Heeft ghesmaeckt, en stirf de <rhyme label="b" type="m" corresp="#s2:l2">dood</rhyme>;</l>
        <l id="s2:l5" met="4" type="+-">Heeft het hout gheteeckent <rhyme label="c" type="m">dan</rhyme>,</l>
        <l id="s2:l6" met="4" type="+-">En de schuld be-taelt daer <rhyme label="c" type="m" corresp="#s2:l5">van</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="+-">Sulck-een werck moest zyn <rhyme label="a" type="f">be-dreven</rhyme></l>
        <l id="s3:l2" met="4" type="+-">Tot der menschen <rhyme label="b" type="m">saeligheyd</rhyme>;</l>
        <l id="s3:l3" met="4" type="+-">Dat dees' konste soud' <rhyme label="a" type="f" corresp="#s3:l1">ont-weven</rhyme>,</l>
        <l id="s3:l4" met="4" type="+-">'t Welck door list was <rhyme label="b" type="m" corresp="#s3:l2">aen-gheleyd</rhyme>;</l>
        <l id="s3:l5" met="4" type="+-">En van 's vyands quaed <rhyme label="c" type="m">fenyn</rhyme></l>
        <l id="s3:l6" met="4" type="+-">Komen moest ons' <rhyme label="c" type="m" corresp="#s3:l5">medecyn</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="+-">Als nu zyn vol-brocht de <rhyme label="a" type="f">stonden</rhyme>,</l>
        <l id="s4:l2" met="4" type="+-">En vol-komen is den <rhyme label="b" type="m">tyd</rhyme>,</l>
        <l id="s4:l3" met="4" type="+-">Is des Vaders Soôn <rhyme label="a" type="f" corresp="#s4:l1">ghesonden</rhyme>,</l>
        <l id="s4:l4" met="4" type="+-">'s Werelds Schepper langh <rhyme label="b" type="m" corresp="#s4:l2">ver-byd</rhyme>;</l>
        <l id="s4:l5" met="4" type="+-">En is naer der Vad'ren <rhyme label="c" type="m">wensch</rhyme></l>
        <l id="s4:l6" met="4" type="+-">Uyt een Maeghd gheboren <rhyme label="c" type="m" corresp="#s4:l5">mensch</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="+-">In een nauwe kribb' <rhyme label="a" type="f">ver-borghen</rhyme></l>
        <l id="s5:l2" met="4" type="+-">Weent het hoogh-gheboren <rhyme label="b" type="m">Kind</rhyme>,</l>
        <l id="s5:l3" met="4" type="+-">'t Welck zyn Moeder maeght vol <rhyme label="a" type="f" corresp="#s5:l1">sorghen</rhyme></l>
        <l id="s5:l4" met="4" type="+-">In haer arme doeckskens <rhyme label="b" type="m" corresp="#s5:l2">wind</rhyme>,</l>
        <l id="s5:l5" met="4" type="+-">En Gods handen, voeten <rhyme label="c" type="m">bindt</rhyme></l>
        <l id="s5:l6" met="4" type="+-">In syn luyers met een <rhyme label="c" type="m" corresp="#s5:l5">lint</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="+-">Prys, en glori' zy, en <rhyme label="a" type="f">eere</rhyme></l>
        <l id="s6:l2" met="4" type="+-">D'heylighe <rhyme label="b" type="m">Dryvuldigheydt</rhyme>;</l>
        <l id="s6:l3" met="4" type="+-">Eenen God, en eenen <rhyme label="a" type="f" corresp="#s6:l1">Heere</rhyme></l>
        <l id="s6:l4" met="4" type="+-">Eenen lof zy <rhyme label="b" type="m" corresp="#s6:l2">toe-gheseyt</rhyme>;</l>
        <l id="s6:l5" met="4" type="+-">Vader, Soon, en heyligh <rhyme label="c" type="m">Gheest</rhyme></l>
        <l id="s6:l6" met="4" type="+-">Zy gheloêft elck <rhyme label="c" type="m" corresp="#s6:l5">alder-meest</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

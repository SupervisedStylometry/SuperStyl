<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<song>
  <meta>
    <id>5095</id>
    <date>
      <year-start>1591</year-start>
      <year-end>1592</year-end>
    </date>
    <tags>
      <tag standard-name="schriftuurlijk lied" translation="scripture song">schriftuurlijk lied</tag>
      <tag standard-name="vermaanlied" translation="admonitory song">vermaanlied</tag>
    </tags>
    <melody>Te mei als alle vogels zingen</melody>
    <categories>
      <category translation="religion">godsdienst</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">AEnhoort een liet ghy Adams <rhyme label="a" type="m">zaet</rhyme></l>
        <l id="s1:l2" met="4" type="-+">Siet dat ghy hem niet na en <rhyme label="a" type="m" corresp="#s1:l1">gaet</rhyme></l>
        <l id="s1:l3" met="3" type="-+">Waer volcht christi <rhyme label="b" type="f">ghepresen</rhyme></l>
        <l id="s1:l4" met="4" type="-+">En doet altijt na zijnen <rhyme label="a" type="m" corresp="#s1:l1">raet</rhyme>,</l>
        <l id="s1:l5" met="3" type="-+">So suldy salich <rhyme label="b" type="f" corresp="#s1:l3">wesen</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Wat vanden vleesche is <rhyme label="a" type="m">ghebaert</rhyme></l>
        <l id="s2:l2" met="4" type="-+">Dats vleesch, so ons Christus <rhyme label="a" type="m" corresp="#s2:l1">verclaert</rhyme></l>
        <l id="s2:l3" met="3" type="-+">Also wy moghen <rhyme label="b" type="f">hooren</rhyme></l>
        <l id="s2:l4" met="4" type="-+">O menschen bedwingt uwen <rhyme label="a" type="m" corresp="#s2:l1">aert</rhyme></l>
        <l id="s2:l5" met="3" type="-+">Wort wten gheest <rhyme label="b" type="f" corresp="#s2:l3">ghebooren</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Want vleeschelijck ghesint te <rhyme label="a" type="m">zijn</rhyme></l>
        <l id="s3:l2" met="4" type="-+">Dats Gods viantschap, hoort wel <rhyme label="a" type="m" corresp="#s3:l1">mijn</rhyme></l>
        <l id="s3:l3" met="3" type="-+">Menschen neemt dit voor <rhyme label="b" type="f">ooghen</rhyme></l>
        <l id="s3:l4" met="4" type="-+">Weet dat wy in alsulcken <rhyme label="a" type="m" corresp="#s3:l1">schijn</rhyme></l>
        <l id="s3:l5" met="3" type="-+">Godt niet behaghen en <rhyme label="b" type="f" corresp="#s3:l3">moghen</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Die vleeschelijck zijn so men <rhyme label="a" type="m">vint</rhyme></l>
        <l id="s4:l2" met="4" type="-+">Die zijn oock vleeschelijck <rhyme label="a" type="m" corresp="#s4:l1">ghesint</rhyme></l>
        <l id="s4:l3" met="3" type="-+">Men leest van deser <rhyme label="b" type="f">saken</rhyme></l>
        <l id="s4:l4" met="4" type="-+">Een vleeschelijck mensch is so <rhyme label="a" type="m" corresp="#s4:l1">verblint</rhyme>,</l>
        <l id="s4:l5" met="3" type="-+">Godts gheest can hy niet <rhyme label="b" type="f" corresp="#s4:l3">smaken</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">De wijsheyt Godts, so wy <rhyme label="a" type="m">verstaen</rhyme></l>
        <l id="s5:l2" met="4" type="-+">In gheen quaetwillige siel en wil <rhyme label="a" type="m" corresp="#s5:l1">gaen</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Noch in gheen lichaem <rhyme label="b" type="f">mede</rhyme></l>
        <l id="s5:l4" met="4" type="-+">Dat der sonden is <rhyme label="a" type="m" corresp="#s5:l1">onderdaen</rhyme></l>
        <l id="s5:l5" met="3" type="-+">Hierom staet na den <rhyme label="b" type="f" corresp="#s5:l3">vrede</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Tboec der wijsheyt geeft claer <rhyme label="a" type="m">bediet</rhyme></l>
        <l id="s6:l2" met="4" type="-+">Dat Godts geest den geueynsden <rhyme label="a" type="m" corresp="#s6:l1">vliet</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">Dus wilt na Petrus <rhyme label="b" type="f">segghen</rhyme></l>
        <l id="s6:l4" met="4" type="-+">Gheueynstheyt en list, nu ter <rhyme label="a" type="m" corresp="#s6:l1">tijt</rhyme></l>
        <l id="s6:l5" met="3" type="-+">Beginnen af te <rhyme label="b" type="f" corresp="#s6:l3">legghen</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Trect wt den ouden mensch <rhyme label="a" type="m">onclaer</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Met zijn quaey wercken <rhyme label="a" type="m" corresp="#s7:l1">allegaer</rhyme></l>
        <l id="s7:l3" met="3" type="-+">En wilt daer niet op <rhyme label="b" type="f">slapen</rhyme></l>
        <l id="s7:l4" met="4" type="-+">Doet aen den nieuwen mensch <rhyme label="a" type="m" corresp="#s7:l1">eerbaer</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Die nae Godt is <rhyme label="b" type="f" corresp="#s7:l3">gheschapen</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Legt af die onreynicheyt <rhyme label="a" type="m">nu</rhyme></l>
        <l id="s8:l2" met="4" type="-+">En van alle boosheyt weest <rhyme label="a" type="m" corresp="#s8:l1">schu</rhyme></l>
        <l id="s8:l3" met="3" type="-+">Wilt v hart niet <rhyme label="b" type="f">verharden</rhyme></l>
        <l id="s8:l4" met="4" type="-+">Met sachtmoedicheyt laet in <rhyme label="a" type="m" corresp="#s8:l1">v</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Godts woort gheplantet <rhyme label="b" type="f" corresp="#s8:l3">werden</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="4" type="-+">O menschen al hoort dit <rhyme label="a" type="m">bediet</rhyme></l>
        <l id="s9:l2" met="4" type="-+">Ontfangt wt liefden doch dit <rhyme label="a" type="m" corresp="#s9:l1">liet</rhyme></l>
        <l id="s9:l3" met="3" type="-+">Want liefde dedet <rhyme label="b" type="f">dichten</rhyme></l>
        <l id="s9:l4" met="4" type="-+">En dat wt sulcken een meyningen <rhyme label="a" type="m" corresp="#s9:l1">siet</rhyme></l>
        <l id="s9:l5" met="3" type="-+">Oft yemant mochte <rhyme label="b" type="f" corresp="#s9:l3">stichten</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

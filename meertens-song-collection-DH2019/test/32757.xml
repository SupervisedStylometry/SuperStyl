  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="3" type="-+">CHristus is ons <rhyme label="a" type="f">verresen</rhyme>,</l>
        <l id="s1:l2" met="3" type="-+">O menschen zijt <rhyme label="b" type="m">verheught</rhyme>,</l>
        <l id="s1:l3" met="3" type="-+">En wilt nu vrolijck <rhyme label="a" type="f" corresp="#s1:l1">wesen</rhyme>,</l>
        <l id="s1:l4" met="3" type="-+">In wendich soo ghy <rhyme label="b" type="m" corresp="#s1:l2">meught</rhyme></l>
        <l id="s1:l5" met="3" type="-+">Deur hem zijn wy <rhyme label="a" type="f" corresp="#s1:l1">ghenesen</rhyme></l>
        <l id="s1:l6" met="3" type="-+">Van sonden en <rhyme label="b" type="m" corresp="#s1:l2">ondeught</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="3" type="-+">Adam den eersten <rhyme label="a" type="f">vader</rhyme>,</l>
        <l id="s2:l2" met="3" type="-+">Deur <rhyme label="b" type="m">d'onghehoorsaemheyt</rhyme>,</l>
        <l id="s2:l3" met="3" type="-+">Verleydt door den <rhyme label="a" type="f" corresp="#s2:l1">verrader</rhyme></l>
        <l id="s2:l4" met="3" type="-+">t' Serpent vol <rhyme label="b" type="m" corresp="#s2:l2">nijdicheyt</rhyme>,</l>
        <l id="s2:l5" met="3" type="-+">Die brocht ons <rhyme label="a" type="f" corresp="#s2:l1">alle-gader</rhyme>.</l>
        <l id="s2:l6" met="3" type="-+">In groot <rhyme label="b" type="m" corresp="#s2:l2">allendicheyt</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="3" type="-+">Maer Christus onsen <rhyme label="a" type="f">Heere</rhyme>,</l>
        <l id="s3:l2" met="3" type="-+">Ghehoorsaem totter <rhyme label="b" type="m">doot</rhyme>,</l>
        <l id="s3:l3" met="3" type="-+">Heeft sijn leven <rhyme label="a" type="f" corresp="#s3:l1">teere</rhyme></l>
        <l id="s3:l4" met="3" type="-+">Beswaert met pijnen <rhyme label="b" type="m" corresp="#s3:l2">groot</rhyme>:</l>
        <l id="s3:l5" met="3" type="-+">Ontfanght dan dese <rhyme label="a" type="f" corresp="#s3:l1">leere</rhyme>,</l>
        <l id="s3:l6" met="3" type="-+">Loopt tot hem indien <rhyme label="b" type="m" corresp="#s3:l2">noot</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="3" type="-+">Over de doot als <rhyme label="a" type="f">heden</rhyme>,</l>
        <l id="s4:l2" met="3" type="-+">Heeft hy <rhyme label="b" type="m">ghetriumpheert</rhyme>,</l>
        <l id="s4:l3" met="3" type="-+">De helle daer <rhyme label="a" type="f" corresp="#s4:l1">beneden</rhyme></l>
        <l id="s4:l4" met="3" type="-+">Oock me <rhyme label="b" type="m" corresp="#s4:l2">ghespolieert</rhyme>;</l>
        <l id="s4:l5" met="3" type="-+">Dus hy tot alle <rhyme label="a" type="f" corresp="#s4:l1">steden</rhyme></l>
        <l id="s4:l6" met="3" type="-+">Wort <rhyme label="b" type="m" corresp="#s4:l2">gheglorificeert</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="3" type="-+">Vroegh voor den dagh <rhyme label="a" type="f">schoone</rhyme>,</l>
        <l id="s5:l2" met="3" type="-+">Vander doodt <rhyme label="b" type="m">opghestaen</rhyme></l>
        <l id="s5:l3" met="3" type="-+">Is hy, met blijden <rhyme label="a" type="f" corresp="#s5:l1">thoone</rhyme>,</l>
        <l id="s5:l4" met="3" type="-+">Tot sijn Moeder <rhyme label="b" type="m" corresp="#s5:l2">ghegaen</rhyme>:</l>
        <l id="s5:l5" met="3" type="-+">Hy vandt der Maeghden <rhyme label="a" type="f" corresp="#s5:l1">Croone</rhyme></l>
        <l id="s5:l6" met="3" type="-+">Met bitterheyt <rhyme label="b" type="m" corresp="#s5:l2">bevaen</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="3" type="-+">Hy sprack? Wilt niet meer <rhyme label="a" type="f">treuren</rhyme>,</l>
        <l id="s6:l2" met="3" type="-+">O Moeder my <rhyme label="b" type="m">aensiet</rhyme>,</l>
        <l id="s6:l3" met="3" type="-+">V Hert dat schijnt te <rhyme label="a" type="f" corresp="#s6:l1">scheuren</rhyme></l>
        <l id="s6:l4" met="3" type="-+">Deur alle dit <rhyme label="b" type="m" corresp="#s6:l2">verdriet</rhyme>:</l>
        <l id="s6:l5" met="3" type="-+">Het moest met my <rhyme label="a" type="f" corresp="#s6:l1">ghebeuren</rhyme>,</l>
        <l id="s6:l6" met="3" type="-+">Ghelijck het is <rhyme label="b" type="m" corresp="#s6:l2">gheschiet</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="3" type="-+">Noch heeft hy <rhyme label="a" type="f">menighmale</rhyme></l>
        <l id="s7:l2" met="3" type="-+">De sijne <rhyme label="b" type="m">gheopenbaert</rhyme>,</l>
        <l id="s7:l3" met="3" type="-+">Als doen sy in een <rhyme label="a" type="f" corresp="#s7:l1">sale</rhyme></l>
        <l id="s7:l4" met="3" type="-+">Saten by een <rhyme label="b" type="m" corresp="#s7:l2">vergaert</rhyme>,</l>
        <l id="s7:l5" met="3" type="-+">Met ghesloten <rhyme label="a" type="f" corresp="#s7:l1">portale</rhyme>,</l>
        <l id="s7:l6" met="3" type="-+">Deur vreese seer <rhyme label="b" type="m" corresp="#s7:l2">beswaert</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="3" type="-+">Hy sprack met blijden <rhyme label="a" type="f">sede</rhyme>,</l>
        <l id="s8:l2" met="3" type="-+">Tot hen op't selve <rhyme label="b" type="m">pas</rhyme>,</l>
        <l id="s8:l3" met="3" type="-+">Ick gheeft u mijnder <rhyme label="a" type="f" corresp="#s8:l1">vrede</rhyme>:</l>
        <l id="s8:l4" met="3" type="-+">d'Apostelen seer <rhyme label="b" type="m" corresp="#s8:l2">ras</rhyme></l>
        <l id="s8:l5" met="3" type="-+">Gheloofden daer ter <rhyme label="a" type="f" corresp="#s8:l1">stede</rhyme>,</l>
        <l id="s8:l6" met="3" type="-+">Dat hy verresen <rhyme label="b" type="m" corresp="#s8:l2">was</rhyme>.</l>
      </lg>
      <lg id="s9" type="stanza">
        <l id="s9:l1" met="3" type="-+">Is 't dat wy <rhyme label="a" type="f">gheestelijcke</rhyme></l>
        <l id="s9:l2" met="3" type="-+">Met hem verresen <rhyme label="b" type="m">zijn</rhyme>,</l>
        <l id="s9:l3" met="3" type="-+">Soo laet ons al <rhyme label="a" type="f" corresp="#s9:l1">ghelijcke</rhyme>,</l>
        <l id="s9:l4" met="3" type="-+">Soecken en smaecken <rhyme label="b" type="m" corresp="#s9:l2">fijn</rhyme>,</l>
        <l id="s9:l5" met="3" type="-+">Godt in sijn <rhyme label="a" type="f" corresp="#s9:l1">Hemelrijcke</rhyme>,</l>
        <l id="s9:l6" met="3" type="-+">En niet des Werelts <rhyme label="b" type="m" corresp="#s9:l2">schijn</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>

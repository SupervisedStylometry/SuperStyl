      <category translation="seasons and annual events">jaarkring</category>
    </categories>
  <author></author></meta>
  <text>
    <lg type="song">
      <lg id="s1" type="stanza">
        <l id="s1:l1" met="4" type="-+">WEest nu verhuecht al ghy <rhyme label="a" type="f">Oprechten</rhyme>,</l>
        <l id="s1:l2" met="4" type="-+">Met uwen Coningh u <rhyme label="b" type="m">verblijdt</rhyme>:</l>
        <l id="s1:l3" met="4" type="-+">Dat hy der Sonden-Bergh comt <rhyme label="a" type="f" corresp="#s1:l1">slechten</rhyme>,</l>
        <l id="s1:l4" met="4" type="-+">Soo dat ghy GODES Vrunden <rhyme label="b" type="m" corresp="#s1:l2">sijt</rhyme>,</l>
        <l id="s1:l5" met="3" type="+-">Die u heeft <rhyme label="c" type="f">gesonden</rhyme></l>
        <l id="s1:l6" met="3" type="+-">Hem die comt <rhyme label="c" type="f" corresp="#s1:l5">verconden</rhyme></l>
        <l id="s1:l7" met="3" type="+-">GODTS Genade <rhyme label="d" type="m">claar</rhyme>.</l>
        <l id="s1:l8" met="3" type="+-">Wilt de Sond' dan <rhyme label="e" type="f">haten</rhyme>,</l>
        <l id="s1:l9" met="3" type="+-">En het Boose <rhyme label="e" type="f" corresp="#s1:l8">laten</rhyme>,</l>
        <l id="s1:l10" met="3" type="+-">Ia dit Nieuvve <rhyme label="d" type="m" corresp="#s1:l7">Iaar</rhyme>.</l>
      </lg>
      <lg id="s2" type="stanza">
        <l id="s2:l1" met="4" type="-+">Den Nacht die is voor-by <rhyme label="a" type="f">geleden</rhyme>,</l>
        <l id="s2:l2" met="4" type="-+">Die ons te voren hadd' <rhyme label="b" type="m">bedeckt</rhyme>,</l>
        <l id="s2:l3" met="4" type="-+">Den Coningh comt tot ons <rhyme label="a" type="f" corresp="#s2:l1">gereden</rhyme>,</l>
        <l id="s2:l4" met="4" type="-+">En zijne handt tot hulp <rhyme label="b" type="m" corresp="#s2:l2">uyt-streckt</rhyme>.</l>
        <l id="s2:l5" met="3" type="+-">GODT zijn Son laat <rhyme label="c" type="f">schijnen</rhyme>,</l>
        <l id="s2:l6" met="3" type="+-">Ende doet <rhyme label="c" type="f" corresp="#s2:l5">verdwijnen</rhyme></l>
        <l id="s2:l7" met="3" type="+-">Ons benauwtheydt <rhyme label="d" type="m">swaar</rhyme>:</l>
        <l id="s2:l8" met="3" type="+-">Dies schouwt duyst're <rhyme label="e" type="f">wercken</rhyme>,</l>
        <l id="s2:l9" met="3" type="+-">Als des HEEREN <rhyme label="e" type="f" corresp="#s2:l8">Klercken</rhyme>,</l>
        <l id="s2:l10" met="3" type="+-">In dit Nieuvve <rhyme label="d" type="m" corresp="#s2:l7">Iaar</rhyme>.</l>
      </lg>
      <lg id="s3" type="stanza">
        <l id="s3:l1" met="4" type="-+">Ons Coningh comt tot ons <rhyme label="a" type="f">geloopen</rhyme></l>
        <l id="s3:l2" met="4" type="-+">In desen kouden <rhyme label="b" type="m">Winter-tijdt</rhyme>,</l>
        <l id="s3:l3" met="4" type="-+">Om uyt den Kercker ons te <rhyme label="a" type="f" corresp="#s3:l1">koopen</rhyme>,</l>
        <l id="s3:l4" met="4" type="-+">Daar in ons braght des DUYVELS <rhyme label="b" type="m" corresp="#s3:l2">Nijdt</rhyme>.</l>
        <l id="s3:l5" met="3" type="+-">Wel-com <rhyme label="c" type="f">Nieuw-geboren</rhyme></l>
        <l id="s3:l6" met="3" type="+-">Coningh <rhyme label="c" type="f" corresp="#s3:l5">uyt-vercoren</rhyme>,</l>
        <l id="s3:l7" met="3" type="+-">Trouwe <rhyme label="d" type="m">Middelaar</rhyme>,</l>
        <l id="s3:l8" met="3" type="+-">Die u laat <rhyme label="e" type="f">besnijden</rhyme>,</l>
        <l id="s3:l9" met="3" type="+-">Tot troost van ons <rhyme label="e" type="f" corresp="#s3:l8">lijden</rhyme>,</l>
        <l id="s3:l10" met="3" type="+-">In dit Nieuvve <rhyme label="d" type="m" corresp="#s3:l7">Iaar</rhyme>.</l>
      </lg>
      <lg id="s4" type="stanza">
        <l id="s4:l1" met="4" type="-+">Besnijdt o Mensch u hert en <rhyme label="a" type="f">sinnen</rhyme>,</l>
        <l id="s4:l2" met="4" type="-+">Volght uwes Coninghs <rhyme label="b" type="m">Ned'righeydt</rhyme>,</l>
        <l id="s4:l3" met="4" type="-+">Zijn GEEST laat wonen in u <rhyme label="a" type="f" corresp="#s4:l1">binnen</rhyme>,</l>
        <l id="s4:l4" met="4" type="-+">En gaat den wegh dien hy u <rhyme label="b" type="m" corresp="#s4:l2">leydt</rhyme>.</l>
        <l id="s4:l5" met="3" type="+-">Wilt op't Nieuvve <rhyme label="c" type="f">zayen</rhyme>,</l>
        <l id="s4:l6" met="3" type="+-">Dat ghy we'er mueght <rhyme label="c" type="f" corresp="#s4:l5">mayen</rhyme></l>
        <l id="s4:l7" met="3" type="+-">Eer en Vruechd hier <rhyme label="d" type="m">naar</rhyme>.</l>
        <l id="s4:l8" met="3" type="+-">Wie 'tOud' niet laat <rhyme label="e" type="f">varen</rhyme></l>
        <l id="s4:l9" met="3" type="+-">Dreyght een groot <rhyme label="e" type="f" corresp="#s4:l8">beswaren</rhyme></l>
        <l id="s4:l10" met="3" type="+-">In dit Nieuvve <rhyme label="d" type="m" corresp="#s4:l7">Iaar</rhyme>.</l>
      </lg>
      <lg id="s5" type="stanza">
        <l id="s5:l1" met="4" type="-+">Een koude Vorst ons hadd' <rhyme label="a" type="f">bevangen</rhyme>,</l>
        <l id="s5:l2" met="4" type="-+">Eer dese Son haar schijnsel <rhyme label="b" type="m">gaff</rhyme>:</l>
        <l id="s5:l3" met="4" type="-+">Men sagh het alles droevigh <rhyme label="a" type="f" corresp="#s5:l1">hangen</rhyme>:</l>
        <l id="s5:l4" met="4" type="-+">De Menschen aten 'tsondigh <rhyme label="b" type="m" corresp="#s5:l2">Draff</rhyme>:</l>
        <l id="s5:l5" met="3" type="+-">Dies zy door GODTS <rhyme label="c" type="f">Thoren</rhyme></l>
        <l id="s5:l6" met="3" type="+-">Lagen heel <rhyme label="c" type="f" corresp="#s5:l5">verloren</rhyme></l>
        <l id="s5:l7" met="3" type="+-">In anghst en <rhyme label="d" type="m">gevaar</rhyme>:</l>
        <l id="s5:l8" met="3" type="+-">Doch nu siet-men <rhyme label="e" type="f">groeyen</rhyme></l>
        <l id="s5:l9" met="3" type="+-">Alles, en we'er <rhyme label="e" type="f" corresp="#s5:l8">bloeyen</rhyme>,</l>
        <l id="s5:l10" met="3" type="+-">In dit Nieuvve <rhyme label="d" type="m" corresp="#s5:l7">Iaar</rhyme>.</l>
      </lg>
      <lg id="s6" type="stanza">
        <l id="s6:l1" met="4" type="-+">Dit Nieuvve Iaar brenght nieuw <rhyme label="a" type="f">Genade</rhyme>,</l>
        <l id="s6:l2" met="4" type="-+">GODT alle daagh nieuw Gunst <rhyme label="b" type="m">bethoont</rhyme>:</l>
        <l id="s6:l3" met="4" type="-+">Al 'tGoedt zijns Soons comt ons te <rhyme label="a" type="f" corresp="#s6:l1">stade</rhyme>,</l>
        <l id="s6:l4" met="4" type="-+">Om zijnent wil GODT ons <rhyme label="b" type="m" corresp="#s6:l2">verschoont</rhyme>.</l>
        <l id="s6:l5" met="3" type="+-">Wie soud' dan niet <rhyme label="c" type="f">loven</rhyme></l>
        <l id="s6:l6" met="3" type="+-">Onsen GODT hier <rhyme label="c" type="f" corresp="#s6:l5">boven</rhyme>,</l>
        <l id="s6:l7" met="3" type="+-">Die ons van <rhyme label="d" type="m">misbaar</rhyme></l>
        <l id="s6:l8" met="3" type="+-">Trouwelijck wil <rhyme label="e" type="f">helpen</rhyme>,</l>
        <l id="s6:l9" met="3" type="+-">En ons' Droeffheydt <rhyme label="e" type="f" corresp="#s6:l8">stelpen</rhyme></l>
        <l id="s6:l10" met="3" type="+-">In dit Nieuvve <rhyme label="d" type="m" corresp="#s6:l7">Iaar</rhyme>.</l>
      </lg>
      <lg id="s7" type="stanza">
        <l id="s7:l1" met="4" type="-+">Dees Nieuvve VVereldt staat seer <rhyme label="a" type="f">lustigh</rhyme></l>
        <l id="s7:l2" met="4" type="-+">Met Vruchten schoon aan alle <rhyme label="b" type="m">cant</rhyme>.</l>
        <l id="s7:l3" met="4" type="-+">Wie houden wil zijn Ziel <rhyme label="a" type="f" corresp="#s7:l1">gerustigh</rhyme>,</l>
        <l id="s7:l4" met="4" type="-+">Thoon' dat hy sy een edel <rhyme label="b" type="m" corresp="#s7:l2">Plant</rhyme></l>
        <l id="s7:l5" met="3" type="+-">In dees Coninghs <rhyme label="c" type="f">Hoven</rhyme>,</l>
        <l id="s7:l6" met="3" type="+-">Off hy wordt <rhyme label="c" type="f" corresp="#s7:l5">verschoven</rhyme>.</l>
        <l id="s7:l7" met="3" type="+-">O ghy <rhyme label="d" type="m">Christen-Schaar</rhyme>,</l>
        <l id="s7:l8" met="3" type="+-">Wordt doch Nieuvve <rhyme label="e" type="f">Menschen</rhyme></l>
        <l id="s7:l9" met="3" type="+-">(Dit is CHRISTI <rhyme label="e" type="f" corresp="#s7:l8">wenschen</rhyme>)</l>
        <l id="s7:l10" met="3" type="+-">In dit Nieuvve <rhyme label="d" type="m" corresp="#s7:l7">Iaar</rhyme>.</l>
      </lg>
      <lg id="s8" type="stanza">
        <l id="s8:l1" met="4" type="-+">Gedenckt hoe langh ghy hebt <rhyme label="a" type="f">beslagen</rhyme></l>
        <l id="s8:l2" met="4" type="-+">On-nuttelijck des HEEREN <rhyme label="b" type="m">Grondt</rhyme> !</l>
        <l id="s8:l3" met="4" type="-+">Soo ghy dan noch geen Vrucht wilt <rhyme label="a" type="f" corresp="#s8:l1">dragen</rhyme>,</l>
        <l id="s8:l4" met="4" type="-+">Hy houdt u aff in corter <rhyme label="b" type="m" corresp="#s8:l2">stondt</rhyme>.</l>
        <l id="s8:l5" met="3" type="+-">Wilt niet langer <rhyme label="c" type="f">wachten</rhyme></l>
        <l id="s8:l6" met="3" type="+-">Na de Duechdt te <rhyme label="c" type="f" corresp="#s8:l5">trachten</rhyme>.</l>
        <l id="s8:l7" met="3" type="+-">Neemt u tijdt doch <rhyme label="d" type="m">waar</rhyme>,</l>
        <l id="s8:l8" met="3" type="+-">En doet op uw' <rhyme label="e" type="f">ooren</rhyme>,</l>
        <l id="s8:l9" met="3" type="+-">Wilt GODTS stem nu <rhyme label="e" type="f" corresp="#s8:l8">hooren</rhyme>,</l>
        <l id="s8:l10" met="3" type="+-">In dit Nieuvve <rhyme label="d" type="m" corresp="#s8:l7">Iaar</rhyme>.</l>
      </lg>
    </lg>
  </text>
</song>
